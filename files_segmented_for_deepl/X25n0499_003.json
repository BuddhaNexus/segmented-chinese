[
    {
        "source_sentence": "金剛般若波羅蜜經懸判疏鈔卷之三",
        "from": "X25n0499_003:0640a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅建西天寺武林後學沙門性起述",
        "from": "X25n0499_003:0640a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三會通餘部三。",
        "from": "X25n0499_003:0640a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標。",
        "from": "X25n0499_003:0640a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三會通餘部者。",
        "from": "X25n0499_003:0640a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二釋文。",
        "from": "X25n0499_003:0640a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分六。",
        "from": "X25n0499_003:0640a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初通括大意。",
        "from": "X25n0499_003:0640a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既委此經。",
        "from": "X25n0499_003:0640a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已屬同教一乘。",
        "from": "X25n0499_003:0640a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然同教一乘。",
        "from": "X25n0499_003:0640a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃諸經之綱領。",
        "from": "X25n0499_003:0640a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏之本源。",
        "from": "X25n0499_003:0640a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以前後一貫。",
        "from": "X25n0499_003:0640a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始終無別。",
        "from": "X25n0499_003:0640a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知教雖分五。",
        "from": "X25n0499_003:0640a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率本無殊。",
        "from": "X25n0499_003:0640a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初華嚴。",
        "from": "X25n0499_003:0640a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說阿含。",
        "from": "X25n0499_003:0640a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說方等。",
        "from": "X25n0499_003:0640a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次唱般若。",
        "from": "X25n0499_003:0640a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄宗而為其本。",
        "from": "X25n0499_003:0640a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二引經證成。",
        "from": "X25n0499_003:0640a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文六。",
        "from": "X25n0499_003:0640a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初引小乘論明法空。",
        "from": "X25n0499_003:0640a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故阿含論云。",
        "from": "X25n0499_003:0640a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無是老死。",
        "from": "X25n0499_003:0640a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即法空也。",
        "from": "X25n0499_003:0640a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無誰老死。",
        "from": "X25n0499_003:0640a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生空也。",
        "from": "X25n0499_003:0640a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二引智論明法空。",
        "from": "X25n0499_003:0640a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又智論云。",
        "from": "X25n0499_003:0640a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏中。",
        "from": "X25n0499_003:0640a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明法空為大空。",
        "from": "X25n0499_003:0640a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶衍中。",
        "from": "X25n0499_003:0640a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方空為大空。",
        "from": "X25n0499_003:0640a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆顯小乘。",
        "from": "X25n0499_003:0640a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已有二空。",
        "from": "X25n0499_003:0640a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又智論中云。",
        "from": "X25n0499_003:0640a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初得道乃至涅槃。",
        "from": "X25n0499_003:0640a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常說般若。",
        "from": "X25n0499_003:0640a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0640a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從始至終。",
        "from": "X25n0499_003:0640a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以般若而為其本故。",
        "from": "X25n0499_003:0640a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三引淨名明法空。",
        "from": "X25n0499_003:0640a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又淨名云。",
        "from": "X25n0499_003:0640b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀身實相。",
        "from": "X25n0499_003:0640b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀佛亦然。",
        "from": "X25n0499_003:0640b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0640b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名云。",
        "from": "X25n0499_003:0640b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊問維摩詰。",
        "from": "X25n0499_003:0640b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲見如來。",
        "from": "X25n0499_003:0640b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為以何等觀如來耶。",
        "from": "X25n0499_003:0640b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰言。",
        "from": "X25n0499_003:0640b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如自觀身實相。",
        "from": "X25n0499_003:0640b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀佛亦然。",
        "from": "X25n0499_003:0640b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀如來。",
        "from": "X25n0499_003:0640b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前際不來。",
        "from": "X25n0499_003:0640b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後際不去。",
        "from": "X25n0499_003:0640b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則不住。",
        "from": "X25n0499_003:0640b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀色．不觀色如。",
        "from": "X25n0499_003:0640b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀色性。",
        "from": "X25n0499_003:0640b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀受想行識。",
        "from": "X25n0499_003:0640b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀識如。",
        "from": "X25n0499_003:0640b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀識性等文(斯取文義。",
        "from": "X25n0499_003:0640b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指觀五蘊身而即實相真如般若之妙理故)。",
        "from": "X25n0499_003:0640b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四引本經明法空。",
        "from": "X25n0499_003:0640b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經云。",
        "from": "X25n0499_003:0640b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心清淨。",
        "from": "X25n0499_003:0640b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生實相等。",
        "from": "X25n0499_003:0640b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是般若義故。",
        "from": "X25n0499_003:0640b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王亦說佛性。",
        "from": "X25n0499_003:0640b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為般若。",
        "from": "X25n0499_003:0640b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五引般若明法空。",
        "from": "X25n0499_003:0640b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大品云。",
        "from": "X25n0499_003:0640b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得聲聞乘。",
        "from": "X25n0499_003:0640b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當學般若波羅蜜。",
        "from": "X25n0499_003:0640b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得緣覺乘。",
        "from": "X25n0499_003:0640b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(當學)般若波羅蜜。",
        "from": "X25n0499_003:0640b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得菩薩乘。",
        "from": "X25n0499_003:0640b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當學般若波羅蜜。",
        "from": "X25n0499_003:0640b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以三獸度河。",
        "from": "X25n0499_003:0640b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各說清淺。",
        "from": "X25n0499_003:0640b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分河飲水。",
        "from": "X25n0499_003:0640b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自有千差。",
        "from": "X25n0499_003:0640b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故爾如來法隨機便。",
        "from": "X25n0499_003:0640b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則教有乘殊。",
        "from": "X25n0499_003:0640b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細推根源。",
        "from": "X25n0499_003:0640b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟一法耳。",
        "from": "X25n0499_003:0640b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0640b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大品云。",
        "from": "X25n0499_003:0640b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得聲聞下。",
        "from": "X25n0499_003:0640b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以般若智水而入三乘故。",
        "from": "X25n0499_003:0640b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故下智得聲聞菩提。",
        "from": "X25n0499_003:0640b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中智得緣覺菩提。",
        "from": "X25n0499_003:0640b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上智得無上菩提。",
        "from": "X25n0499_003:0640b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以三獸度河下。",
        "from": "X25n0499_003:0640b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一兔．二鹿．三馬。",
        "from": "X25n0499_003:0640b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以兔過河。",
        "from": "X25n0499_003:0640b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云水太深。",
        "from": "X25n0499_003:0640b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鹿過河。",
        "from": "X25n0499_003:0640b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云水却好。",
        "from": "X25n0499_003:0640b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以馬過河。",
        "from": "X25n0499_003:0640b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云水太淺。",
        "from": "X25n0499_003:0640b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云各說深淺。",
        "from": "X25n0499_003:0640b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分河飲水。",
        "from": "X25n0499_003:0640b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自有千差者。",
        "from": "X25n0499_003:0640b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云西竺有河名恒河。",
        "from": "X25n0499_003:0640b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此方秦淮河之類。",
        "from": "X25n0499_003:0640b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂各人門口飲水。",
        "from": "X25n0499_003:0640b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清濁不等。",
        "from": "X25n0499_003:0640b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "味有差殊。",
        "from": "X25n0499_003:0640b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯則二喻。",
        "from": "X25n0499_003:0640b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水喻般若。",
        "from": "X25n0499_003:0640b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水性無二。",
        "from": "X25n0499_003:0640b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機有深淺。",
        "from": "X25n0499_003:0640b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諍惡不同。",
        "from": "X25n0499_003:0640b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故爾如來法隨機便下。",
        "from": "X25n0499_003:0640b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合上二喻。",
        "from": "X25n0499_003:0640b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法及機宜。",
        "from": "X25n0499_003:0640b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云細推根源。",
        "from": "X25n0499_003:0640b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯一法耳者。",
        "from": "X25n0499_003:0640b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言般若性水無二別也。",
        "from": "X25n0499_003:0640b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六引法華明法空。",
        "from": "X25n0499_003:0640b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_003:0640c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方佛土中。",
        "from": "X25n0499_003:0640c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟有一乘法。",
        "from": "X25n0499_003:0640c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無二亦無三。",
        "from": "X25n0499_003:0640c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除佛方便說。",
        "from": "X25n0499_003:0640c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一乘法者即般若法也。",
        "from": "X25n0499_003:0640c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0640c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引法華一乘實相。",
        "from": "X25n0499_003:0640c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而分別說三。",
        "from": "X25n0499_003:0640c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今直示本法。",
        "from": "X25n0499_003:0640c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無二亦無三故。",
        "from": "X25n0499_003:0640c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有三說。",
        "from": "X25n0499_003:0640c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自隨他意語。",
        "from": "X25n0499_003:0640c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便說也。",
        "from": "X25n0499_003:0640c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三釋通妨難二。",
        "from": "X25n0499_003:0640c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初問難。",
        "from": "X25n0499_003:0640c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X25n0499_003:0640c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既惟般若一法。",
        "from": "X25n0499_003:0640c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何用初說華嚴。",
        "from": "X25n0499_003:0640c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終唱涅槃。",
        "from": "X25n0499_003:0640c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二釋通答難。",
        "from": "X25n0499_003:0640c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分二。",
        "from": "X25n0499_003:0640c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初從本起末。",
        "from": "X25n0499_003:0640c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "X25n0499_003:0640c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴為直示最上大根眾生。",
        "from": "X25n0499_003:0640c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其奈中下未授。",
        "from": "X25n0499_003:0640c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故于一佛乘。",
        "from": "X25n0499_003:0640c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別說三。",
        "from": "X25n0499_003:0640c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二攝末歸本。",
        "from": "X25n0499_003:0640c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "循循善誘。",
        "from": "X25n0499_003:0640c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引入般若大乘空慧。",
        "from": "X25n0499_003:0640c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先所出納。",
        "from": "X25n0499_003:0640c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是子所知。",
        "from": "X25n0499_003:0640c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至法華會上。",
        "from": "X25n0499_003:0640c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍將般若空慧。",
        "from": "X25n0499_003:0640c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "委付家財。",
        "from": "X25n0499_003:0640c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三乘俱稟授記作佛。",
        "from": "X25n0499_003:0640c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法王大寶。",
        "from": "X25n0499_003:0640c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然而至。",
        "from": "X25n0499_003:0640c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝末歸本。",
        "from": "X25n0499_003:0640c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流入薩婆若故。",
        "from": "X25n0499_003:0640c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知法華若無般若之法。",
        "from": "X25n0499_003:0640c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將何付耶。",
        "from": "X25n0499_003:0640c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0640c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "循循善誘者。",
        "from": "X25n0499_003:0640c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即阿含時。",
        "from": "X25n0499_003:0640c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣說天人因果小教。",
        "from": "X25n0499_003:0640c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以循循善誘。",
        "from": "X25n0499_003:0640c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引迷流而得入涅槃故。",
        "from": "X25n0499_003:0640c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二引入般若大乘空慧者。",
        "from": "X25n0499_003:0640c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即方等會上。",
        "from": "X25n0499_003:0640c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以談法相大乘故。",
        "from": "X25n0499_003:0640c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三先所出納。",
        "from": "X25n0499_003:0640c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是子所知者。",
        "from": "X25n0499_003:0640c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來將般若空慧法財。",
        "from": "X25n0499_003:0640c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命須菩提．迦葉．富樓那等化諸菩薩故。",
        "from": "X25n0499_003:0640c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰是子所知。",
        "from": "X25n0499_003:0640c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四以至法華會上。",
        "from": "X25n0499_003:0640c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍將般若空慧委付家財下。",
        "from": "X25n0499_003:0640c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖法華授記作佛者。",
        "from": "X25n0499_003:0640c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以般若法而付囑之。",
        "from": "X25n0499_003:0640c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方能流入一切智故。",
        "from": "X25n0499_003:0640c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五是知下結歎云。",
        "from": "X25n0499_003:0640c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知若無般若以心印心。",
        "from": "X25n0499_003:0640c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法即法者。",
        "from": "X25n0499_003:0640c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決不能授記作佛耳。",
        "from": "X25n0499_003:0640c23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四示般若流入諸法。",
        "from": "X25n0499_003:0640c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文五。",
        "from": "X25n0499_003:0640c24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初指般若即法界義。",
        "from": "X25n0499_003:0640c24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以般若之法。",
        "from": "X25n0499_003:0641a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在華嚴為一真法界。",
        "from": "X25n0499_003:0641a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾藝修之。",
        "from": "X25n0499_003:0641a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令入般若波羅密門。",
        "from": "X25n0499_003:0641a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0641a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財先近。",
        "from": "X25n0499_003:0641a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧友一言不示(表法男徧一切處故)。",
        "from": "X25n0499_003:0641a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指歸眾藝童子。",
        "from": "X25n0499_003:0641a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱四十二字陀羅尼門。",
        "from": "X25n0499_003:0641a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先阿後茶。",
        "from": "X25n0499_003:0641a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表示菩薩。",
        "from": "X25n0499_003:0641a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入四十二位賢聖真菩提路。",
        "from": "X25n0499_003:0641a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總依般若波羅密法門而修之故。",
        "from": "X25n0499_003:0641a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二指般若即實相義。",
        "from": "X25n0499_003:0641a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在諸大乘經為實相般若。",
        "from": "X25n0499_003:0641a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0641a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來一代時教。",
        "from": "X25n0499_003:0641a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆依實相為本。",
        "from": "X25n0499_003:0641a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離此實相外。",
        "from": "X25n0499_003:0641a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無法可酬故。",
        "from": "X25n0499_003:0641a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三指般若即金剛性。",
        "from": "X25n0499_003:0641a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在此經為金剛般若。",
        "from": "X25n0499_003:0641a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0641a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_003:0641a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者問佛。",
        "from": "X25n0499_003:0641a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經我等云何奉持。",
        "from": "X25n0499_003:0641a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告須菩提。",
        "from": "X25n0499_003:0641a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是經名為金剛般若波羅蜜。",
        "from": "X25n0499_003:0641a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是名字。",
        "from": "X25n0499_003:0641a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當奉持。",
        "from": "X25n0499_003:0641a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "X25n0499_003:0641a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說般若波羅蜜。",
        "from": "X25n0499_003:0641a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即非般若波羅蜜等。",
        "from": "X25n0499_003:0641a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四指般若即覺藏義。",
        "from": "X25n0499_003:0641a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在法華為本源覺藏。",
        "from": "X25n0499_003:0641a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺藏者。",
        "from": "X25n0499_003:0641a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即般若義也。",
        "from": "X25n0499_003:0641a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0641a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本源者。",
        "from": "X25n0499_003:0641a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即真如自性也。",
        "from": "X25n0499_003:0641a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺藏者。",
        "from": "X25n0499_003:0641a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即般若智也。",
        "from": "X25n0499_003:0641a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故起信論云。",
        "from": "X25n0499_003:0641a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從本以來。",
        "from": "X25n0499_003:0641a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性滿足。",
        "from": "X25n0499_003:0641a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切功德。",
        "from": "X25n0499_003:0641a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂自體有大智慧光明義故。",
        "from": "X25n0499_003:0641a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧照法界義故。",
        "from": "X25n0499_003:0641a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實知識義故。",
        "from": "X25n0499_003:0641a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性清淨心義故。",
        "from": "X25n0499_003:0641a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂我淨義故。",
        "from": "X25n0499_003:0641a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清凉不變自在義故。",
        "from": "X25n0499_003:0641a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足如是過於恒沙。",
        "from": "X25n0499_003:0641a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離不斷不異不思議佛法乃至滿足無所少義。",
        "from": "X25n0499_003:0641a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為如來。",
        "from": "X25n0499_003:0641a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名如來法身。",
        "from": "X25n0499_003:0641a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論又問曰。",
        "from": "X25n0499_003:0641a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上說真如。",
        "from": "X25n0499_003:0641a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其體平等。",
        "from": "X25n0499_003:0641a22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離一切相。",
        "from": "X25n0499_003:0641a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何復說體有差別。",
        "from": "X25n0499_003:0641a23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種功德。",
        "from": "X25n0499_003:0641a23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X25n0499_003:0641a23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖實有此諸功德義。",
        "from": "X25n0499_003:0641a23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無差別之相。",
        "from": "X25n0499_003:0641a24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同一味。",
        "from": "X25n0499_003:0641a24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯一真如。",
        "from": "X25n0499_003:0641a24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此義云何。",
        "from": "X25n0499_003:0641b01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無分別。",
        "from": "X25n0499_003:0641b01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離分別相。",
        "from": "X25n0499_003:0641b01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故無二。",
        "from": "X25n0499_003:0641b01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五指般若即涅槃性二。",
        "from": "X25n0499_003:0641b01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初正示名目。",
        "from": "X25n0499_003:0641b02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在涅槃為常住妙性。",
        "from": "X25n0499_003:0641b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦般若義也。",
        "from": "X25n0499_003:0641b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二引經證成。",
        "from": "X25n0499_003:0641b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故世尊將入潛輝云。",
        "from": "X25n0499_003:0641b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以摩訶般若之力。",
        "from": "X25n0499_003:0641b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧觀三界。",
        "from": "X25n0499_003:0641b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸山大海大地含生。",
        "from": "X25n0499_003:0641b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三界。",
        "from": "X25n0499_003:0641b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根本離性。",
        "from": "X25n0499_003:0641b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟寂滅。",
        "from": "X25n0499_003:0641b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同虗空相等。",
        "from": "X25n0499_003:0641b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0641b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺世尊將入涅槃時。",
        "from": "X25n0499_003:0641b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓示三摩禪那。",
        "from": "X25n0499_003:0641b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩鉢底。",
        "from": "X25n0499_003:0641b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反復三次。",
        "from": "X25n0499_003:0641b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出定告眾云。",
        "from": "X25n0499_003:0641b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以摩訶般若之力至同虗空相等者。",
        "from": "X25n0499_003:0641b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示諸佛如來成道轉法輪入涅槃等。",
        "from": "X25n0499_003:0641b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以般若之力。",
        "from": "X25n0499_003:0641b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成就故。",
        "from": "X25n0499_003:0641b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無般若自性。",
        "from": "X25n0499_003:0641b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將何為本耶。",
        "from": "X25n0499_003:0641b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五名別義同。",
        "from": "X25n0499_003:0641b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知名雖有異。",
        "from": "X25n0499_003:0641b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而妙旨無殊。",
        "from": "X25n0499_003:0641b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非般若而為諸法之本哉。",
        "from": "X25n0499_003:0641b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六賢聖同依。",
        "from": "X25n0499_003:0641b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故三賢之所依。",
        "from": "X25n0499_003:0641b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地之所證。",
        "from": "X25n0499_003:0641b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方三世諸佛。",
        "from": "X25n0499_003:0641b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆依般若。",
        "from": "X25n0499_003:0641b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得阿耨菩提者。",
        "from": "X25n0499_003:0641b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一體同觀無二法故。",
        "from": "X25n0499_003:0641b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔。",
        "from": "X25n0499_003:0641b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若既為三世諸佛之母。",
        "from": "X25n0499_003:0641b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈以三賢十地而不依此法之所修哉。",
        "from": "X25n0499_003:0641b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故三賢為解行般若。",
        "from": "X25n0499_003:0641b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地為修證般若。",
        "from": "X25n0499_003:0641b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛為究竟般若。",
        "from": "X25n0499_003:0641b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以從因至果。",
        "from": "X25n0499_003:0641b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非般若性力而已矣。",
        "from": "X25n0499_003:0641b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結。",
        "from": "X25n0499_003:0641b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上第三會餘部文義一科已竟。",
        "from": "X25n0499_003:0641b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛般若波羅蜜經懸判疏鈔卷之三",
        "from": "X25n0499_003:0641b24_0",
        "context_with_next_sentence": false
    }
]