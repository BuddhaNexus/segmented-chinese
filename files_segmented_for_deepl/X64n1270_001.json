[
    {
        "source_sentence": "新刻禪宗十牛圖",
        "from": "X64n1270_001:0775b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛弟子覺因錢唐　胡文煥　著",
        "from": "X64n1270_001:0775b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十牛圖者。",
        "from": "X64n1270_001:0775b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖禪宗託喻於此。",
        "from": "X64n1270_001:0775b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以修心證道者也。",
        "from": "X64n1270_001:0775b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牧童即人也。",
        "from": "X64n1270_001:0775b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛即心也。",
        "from": "X64n1270_001:0775b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓光即人心俱渾化而證於本然之道也。",
        "from": "X64n1270_001:0775b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫心孰不有乎。",
        "from": "X64n1270_001:0775b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有則皆當修也。",
        "from": "X64n1270_001:0775b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道孰不具乎。",
        "from": "X64n1270_001:0775b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具則皆當證也。",
        "from": "X64n1270_001:0775b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此獨為禪宗之喻已哉。",
        "from": "X64n1270_001:0775b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖吾儒亦同然矣。",
        "from": "X64n1270_001:0775b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨吾儒為同然已哉。",
        "from": "X64n1270_001:0775b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖天下之人。",
        "from": "X64n1270_001:0775b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦皆同然矣。",
        "from": "X64n1270_001:0775b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要之始終無異。",
        "from": "X64n1270_001:0775b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其理甚明。",
        "from": "X64n1270_001:0775b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第為物欲所蔽。",
        "from": "X64n1270_001:0775b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故甘牛之不若耳。",
        "from": "X64n1270_001:0775b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫牛且可馴。",
        "from": "X64n1270_001:0775b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而謂心不可修者。",
        "from": "X64n1270_001:0775b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未之有矣。",
        "from": "X64n1270_001:0775b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心可修而謂道不可證者。",
        "from": "X64n1270_001:0775b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又未之有矣。",
        "from": "X64n1270_001:0775b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道既謂本然。",
        "from": "X64n1270_001:0775b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而心則何俟乎修。",
        "from": "X64n1270_001:0775b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物欲之蔽故也。",
        "from": "X64n1270_001:0775b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故予既摘十牛圖。",
        "from": "X64n1270_001:0775b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復附之以苦樂因緣圖。",
        "from": "X64n1270_001:0775b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將使人知物欲之故。",
        "from": "X64n1270_001:0775b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而汲汲然克之。",
        "from": "X64n1270_001:0775b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以證乎本然耳。",
        "from": "X64n1270_001:0775b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然二圖似出乎一喻。",
        "from": "X64n1270_001:0775b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而喻又不出乎一理也。",
        "from": "X64n1270_001:0775b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覧之者。",
        "from": "X64n1270_001:0775b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了然有所得。",
        "from": "X64n1270_001:0775b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擴而充之。",
        "from": "X64n1270_001:0775b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若云吾身亦夢幻泡影露電之喻也。",
        "from": "X64n1270_001:0775b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則此又何是喻哉。",
        "from": "X64n1270_001:0775b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無待乎還元。",
        "from": "X64n1270_001:0775b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不假於託喻者。",
        "from": "X64n1270_001:0775b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯又最上乘矣。",
        "from": "X64n1270_001:0775b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噫。",
        "from": "X64n1270_001:0775b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下此者。",
        "from": "X64n1270_001:0775b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其亦勉之。",
        "from": "X64n1270_001:0775b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普明詠未牧",
        "from": "X64n1270_001:0775b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生獰頭角恣咆哮　　犇走溪山路轉遙　一片黑雲橫谷口　　誰知步步犯嘉苗雲菴和未牧　心狂力壯鎮咆哮　　平貼家邦遠更遙　涉險登危妄奔逐　　時時誰顧食人苗普明詠初調　我有芒繩驀鼻穿　　一迴奔競痛加鞭　從來劣性難調制　　猶得山童盡力牽雲菴和初調　玄毛遍體鼻初穿　　欲制難為不著鞭　寄語牧童須盡力　　乎中紖索再牢牽普明詠受制　漸調漸伏息奔馳　　渡水穿雲步步隨　手把芒繩無少緩　　牧童終日自忘疲雲菴和受制　調息心馳不妄馳　　急牽鼻索急相隨　皤然頭角沉階壍　　猶恨芒童力未疲普明詠迴首　日久功深始轉頭　　顛狂心力漸調柔　山童未肯全相許　　猶把芒繩且繫留雲菴和迴首　牧牛牛已得回頭　　百煉剛成遶指柔　鴨綠春江愁再浪　　爛繩兒□為羈留普明詠馴伏　綠楊陰下古溪邊　　放去收來得自然　日暮碧雲芳草地　　牧童歸去不須牽雲菴和馴伏　芳草原頭碧水邊　　柳陰沙暖步蕭然　霜毛已半肥仍膩　　馴伏相隨不用牽普明詠無礙　露地安眠意自如　　不勞鞭策永無拘　山童穩坐青松下　　一曲昇平樂有餘雲菴和無礙　白牛穩臥體如如　　六戶虗凝總不拘　松下牧童吹一曲　　點諧風明不盈餘普明詠任運　柳岸春波夕照中　　淡烟芳草綠茸茸　饑食渴飲隨時過　　石上山童睡正濃雲菴和任運　淺水平沙一望中　　羅裙草色正蒙茸　柳陰童睡牛方食　　誰問春光似酒濃普明詠相忘　白牛常在白雲中　　人自無心牛亦同　月透白雲雲影白　　白雲明月任西東雲菴和相忘　人牯相忘澤國中　　閑閑去就水雲同　恬然不復江魚比　　從月流西日出東普明詠獨照　牛兒無處牧童閑　　一片孤雲碧嶂間　拍手高歌明月下　　歸來猶有一重關雲菴和獨照　牛忘牧笠有餘閑　　月白風清天地間　到此更如通一線　　自然踏看上頭關普明詠雙泯　人牛不見杳無蹤　　明月光寒萬象空　若問其中端的意　　野花芳草自叢叢雲菴和雙泯　牛兒童子絕行蹤　　了了如空不是空　好似太平春色裏　　依然幽鳥語芳叢昔有優填國王請問賓頭盧尊者。",
        "from": "X64n1270_001:0775c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法中脩行如何。",
        "from": "X64n1270_001:0776b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者答曰。",
        "from": "X64n1270_001:0776b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人行於曠野大火之中。",
        "from": "X64n1270_001:0776b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被一狂象。",
        "from": "X64n1270_001:0776b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所逐。",
        "from": "X64n1270_001:0776b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人見一井畔有一樹。",
        "from": "X64n1270_001:0776b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有藤。",
        "from": "X64n1270_001:0776b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人攀藤。",
        "from": "X64n1270_001:0776b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懸於井上。",
        "from": "X64n1270_001:0776b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下有三毒龍．四毒蛇。",
        "from": "X64n1270_001:0776b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹上有黑白二鼠。",
        "from": "X64n1270_001:0776b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相咬藤。",
        "from": "X64n1270_001:0776b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四畔又有毒蜂螫人。",
        "from": "X64n1270_001:0776b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時復有蜜少許滴於口中。",
        "from": "X64n1270_001:0776b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因貪蜜故。",
        "from": "X64n1270_001:0776b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂忘其苦。",
        "from": "X64n1270_001:0776b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王又問曰。",
        "from": "X64n1270_001:0776b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人苦多。",
        "from": "X64n1270_001:0776b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂多耶。",
        "from": "X64n1270_001:0776b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者答曰。",
        "from": "X64n1270_001:0776b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人都是苦相。",
        "from": "X64n1270_001:0776b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何樂耶。",
        "from": "X64n1270_001:0776b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸智者以譬喻為解。",
        "from": "X64n1270_001:0776b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有偈云。",
        "from": "X64n1270_001:0776b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二鼠侵藤真百苦　　四蛇囲井復千憂　忽然咬斷藤根子　　淪沒何時得出頭又夫曠野者。",
        "from": "X64n1270_001:0776b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界也。",
        "from": "X64n1270_001:0776b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹者。",
        "from": "X64n1270_001:0776b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦身也。",
        "from": "X64n1270_001:0776b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於眾苦行業。",
        "from": "X64n1270_001:0776b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不。",
        "from": "X64n1270_001:0776b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可思議也。",
        "from": "X64n1270_001:0776b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藤者。",
        "from": "X64n1270_001:0776b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是命根也。",
        "from": "X64n1270_001:0776b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象者。",
        "from": "X64n1270_001:0776b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是無常殺鬼也。",
        "from": "X64n1270_001:0776b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黑白二鼠者。",
        "from": "X64n1270_001:0776b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是日月宛轉也。",
        "from": "X64n1270_001:0776b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "井者。",
        "from": "X64n1270_001:0776b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是黃泉路也。",
        "from": "X64n1270_001:0776b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三龍者。",
        "from": "X64n1270_001:0776b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是貪．嗔．癡三毒也。",
        "from": "X64n1270_001:0776b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造作地獄．餓鬼．畜生三惡道。",
        "from": "X64n1270_001:0776c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四蛇者。",
        "from": "X64n1270_001:0776c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是地．水．火．風四大。",
        "from": "X64n1270_001:0776c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又是酒．色．財．氣四非。",
        "from": "X64n1270_001:0776c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又是生．老．病．死四門。",
        "from": "X64n1270_001:0776c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手攀藤者。",
        "from": "X64n1270_001:0776c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是愚癡也。",
        "from": "X64n1270_001:0776c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜂蜜者。",
        "from": "X64n1270_001:0776c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夫妻也。",
        "from": "X64n1270_001:0776c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婬欲情愛。",
        "from": "X64n1270_001:0776c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染著於心。",
        "from": "X64n1270_001:0776c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心是火。",
        "from": "X64n1270_001:0776c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身是宅。",
        "from": "X64n1270_001:0776c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人之火宅不知是眾苦所集也。",
        "from": "X64n1270_001:0776c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜交煎。",
        "from": "X64n1270_001:0776c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟貪恩愛。",
        "from": "X64n1270_001:0776c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一旦命根斷絕。",
        "from": "X64n1270_001:0776c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永墮沉淪。",
        "from": "X64n1270_001:0776c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一失人身。",
        "from": "X64n1270_001:0776c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬劫難復。",
        "from": "X64n1270_001:0776c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切勸諸人趂此色身康徤。",
        "from": "X64n1270_001:0776c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忙裏偷閑。",
        "from": "X64n1270_001:0776c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日晨昏一心專念南無阿彌陀佛千遍萬遍。",
        "from": "X64n1270_001:0776c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世長福消災。",
        "from": "X64n1270_001:0776c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時決定往生西方極樂世界。",
        "from": "X64n1270_001:0776c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　頌曰。",
        "from": "X64n1270_001:0776c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　藤摧墮井命難迯　　象鼠蛇攻手要牢　自己彌陀期早悟　　三塗苦趣莫教遭　肥甘酒肉砒中蜜　　恩愛夫妻笑裏刀　奉勸世人須猛省　　毋令今日又明朝總題胡文煥　觀罷牛圖覺了然　　再觀苦樂有因緣　假饒本性非空後　　畢竟圓光不現前　打破禪機心有佛　　脫離惡趣腹藏天",
        "from": "X64n1270_001:0776c10_0",
        "context_with_next_sentence": false
    }
]