[
    {
        "source_sentence": "大般涅槃經集解卷第二十六",
        "from": "T37n1763_026:0476a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(現病品第十八)",
        "from": "T37n1763_026:0476a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　出無病因謂憐愍眾生施病者藥",
        "from": "T37n1763_026:0476a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　釋五種人謂須陀洹八萬劫得菩提乃至辟支佛十千劫得菩提義現病品第十八案。",
        "from": "T37n1763_026:0476a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_026:0476a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答云何諸菩薩遠離一切病。",
        "from": "T37n1763_026:0476a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病在前品已明。",
        "from": "T37n1763_026:0476a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而未釋無病。",
        "from": "T37n1763_026:0476a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則示現之義未彰。",
        "from": "T37n1763_026:0476a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品顯也。",
        "from": "T37n1763_026:0476a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_026:0476a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因佛現病。",
        "from": "T37n1763_026:0476a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉得廣顯無病之因。",
        "from": "T37n1763_026:0476a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明菩薩地時久已離病。",
        "from": "T37n1763_026:0476a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈況今耶。",
        "from": "T37n1763_026:0476a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則因病以顯不病也。",
        "from": "T37n1763_026:0476a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來所說。",
        "from": "T37n1763_026:0476a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當宗雖舉。",
        "from": "T37n1763_026:0476a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有微實。",
        "from": "T37n1763_026:0476a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將顯至人。",
        "from": "T37n1763_026:0476a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "患累斯盡。",
        "from": "T37n1763_026:0476a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以先示病相。",
        "from": "T37n1763_026:0476a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因請更起光儀顯勝。",
        "from": "T37n1763_026:0476a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以表無病之旨也。",
        "from": "T37n1763_026:0476a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因答第二十九問也。",
        "from": "T37n1763_026:0476a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_026:0476a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下是經之第二段。",
        "from": "T37n1763_026:0476a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣明義也。",
        "from": "T37n1763_026:0476a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有二別。",
        "from": "T37n1763_026:0476a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一廣正說。",
        "from": "T37n1763_026:0476a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二廣流通。",
        "from": "T37n1763_026:0476a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣正說中有三科。",
        "from": "T37n1763_026:0476a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一廣果。",
        "from": "T37n1763_026:0476a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此品也。",
        "from": "T37n1763_026:0476a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二廣因。",
        "from": "T37n1763_026:0476a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即五行也。",
        "from": "T37n1763_026:0476a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三廣佛性。",
        "from": "T37n1763_026:0476a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即師子吼迦葉兩品也。",
        "from": "T37n1763_026:0476a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時迦葉菩薩白佛言(至)患苦悉除無復怖畏。",
        "from": "T37n1763_026:0476a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下舉八事。",
        "from": "T37n1763_026:0476a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰推如來不應有病也。",
        "from": "T37n1763_026:0476a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_026:0476a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有四翻。",
        "from": "T37n1763_026:0476a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一迦葉舉七復次事。",
        "from": "T37n1763_026:0476a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推佛無病。",
        "from": "T37n1763_026:0476a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二佛以神力現三種相。",
        "from": "T37n1763_026:0476a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三群生蒙益。",
        "from": "T37n1763_026:0476a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請佛說法。",
        "from": "T37n1763_026:0476a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四廣述無病以遣時情。",
        "from": "T37n1763_026:0476a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊一切眾生有四毒箭(至)汝等當為大眾說法。",
        "from": "T37n1763_026:0476b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一明有病之因。",
        "from": "T37n1763_026:0476b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫過此四箭。",
        "from": "T37n1763_026:0476b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來已離。",
        "from": "T37n1763_026:0476b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應病也。",
        "from": "T37n1763_026:0476b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二因緣則無病苦(至)何緣於今自言有病。",
        "from": "T37n1763_026:0476b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二無病之因。",
        "from": "T37n1763_026:0476b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫過此二。",
        "from": "T37n1763_026:0476b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊所行。",
        "from": "T37n1763_026:0476b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無病也。",
        "from": "T37n1763_026:0476b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊世人有病或坐或臥(至)云何默然右脇而臥。",
        "from": "T37n1763_026:0476b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明如來既無篤病之相。",
        "from": "T37n1763_026:0476b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何有病耶。",
        "from": "T37n1763_026:0476b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩等凡所給施(至)永斷如是三障重病。",
        "from": "T37n1763_026:0476b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四明自昔已來。",
        "from": "T37n1763_026:0476b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外化事曠。",
        "from": "T37n1763_026:0476b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善功還已。",
        "from": "T37n1763_026:0476b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應有病也。",
        "from": "T37n1763_026:0476b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊菩薩摩訶薩(至)乃於今日唱言有疾。",
        "from": "T37n1763_026:0476b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五明脩因之日。",
        "from": "T37n1763_026:0476b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備有諸願。",
        "from": "T37n1763_026:0476b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略舉九願。",
        "from": "T37n1763_026:0476b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯無病之要旨也。",
        "from": "T37n1763_026:0476b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊世有病者(至)不應說言我今背痛。",
        "from": "T37n1763_026:0476b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六明世人臨終之時。",
        "from": "T37n1763_026:0476b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能有所誡勅。",
        "from": "T37n1763_026:0476b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高推如來。",
        "from": "T37n1763_026:0476b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應同此。",
        "from": "T37n1763_026:0476b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊世有病者(至)不應默然右脇而臥。",
        "from": "T37n1763_026:0476b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七苟有此迹。",
        "from": "T37n1763_026:0476b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必為外道所誚。",
        "from": "T37n1763_026:0476b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊世有病者(至)利益於眾生摧伏諸外道。",
        "from": "T37n1763_026:0476b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八借以身力推。",
        "from": "T37n1763_026:0476b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比佛必無有病。",
        "from": "T37n1763_026:0476b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍說偈以勸也。",
        "from": "T37n1763_026:0476b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_026:0476b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此七復次。",
        "from": "T37n1763_026:0476b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是第一翻。",
        "from": "T37n1763_026:0476b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推佛不應病也。",
        "from": "T37n1763_026:0476b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大悲薰心(至)修行惡法除一闡提。",
        "from": "T37n1763_026:0476b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前偈請云。",
        "from": "T37n1763_026:0476b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲今何在。",
        "from": "T37n1763_026:0476b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以經家以佛起故。",
        "from": "T37n1763_026:0476b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云大悲薰心也。",
        "from": "T37n1763_026:0476b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_026:0476b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第二翻放三種神力。",
        "from": "T37n1763_026:0476b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以利益也。",
        "from": "T37n1763_026:0476b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切天龍鬼神(至)遍至淨居悉皆聞之。",
        "from": "T37n1763_026:0476b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_026:0476c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三翻大眾蒙益。",
        "from": "T37n1763_026:0476c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣設供養。",
        "from": "T37n1763_026:0476c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請說法也。",
        "from": "T37n1763_026:0476c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告迦葉菩薩(至)便謂如來真實有疾。",
        "from": "T37n1763_026:0476c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_026:0476c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四翻佛先廣顯久離病也。",
        "from": "T37n1763_026:0476c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉如言如來人中師子(至)亦不畢竟入於涅槃。",
        "from": "T37n1763_026:0476c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_026:0476c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既廣如來永無病理。",
        "from": "T37n1763_026:0476c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若言有病。",
        "from": "T37n1763_026:0476c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是密教也。",
        "from": "T37n1763_026:0476c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因此復得廣宣祕密。",
        "from": "T37n1763_026:0476c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答。",
        "from": "T37n1763_026:0476c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何為眾生。",
        "from": "T37n1763_026:0476c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣說於祕密。",
        "from": "T37n1763_026:0476c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉是大涅槃即是諸佛(至)非是聲聞緣覺行處。",
        "from": "T37n1763_026:0476c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_026:0476c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下訖云何當有諸病苦耶。",
        "from": "T37n1763_026:0476c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答問云何復示現究竟於涅槃。",
        "from": "T37n1763_026:0476c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉汝上所問如來何故(至)云何當有諸病苦耶。",
        "from": "T37n1763_026:0476c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_026:0476c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答云何復示現究竟於涅槃。",
        "from": "T37n1763_026:0476c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉世有三人其病難治(至)供養恭敬為他說者。",
        "from": "T37n1763_026:0476c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0476c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_026:0476c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答云何說畢竟及與不畢竟也。",
        "from": "T37n1763_026:0476c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先說病行者。",
        "from": "T37n1763_026:0476c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾請佛治病。",
        "from": "T37n1763_026:0476c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說先治病之行也。",
        "from": "T37n1763_026:0476c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥以對病為名。",
        "from": "T37n1763_026:0476c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依涅槃修行。",
        "from": "T37n1763_026:0476c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無病不治。",
        "from": "T37n1763_026:0476c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯病行之能。",
        "from": "T37n1763_026:0476c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先說諸經。",
        "from": "T37n1763_026:0476c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有不治之病也。",
        "from": "T37n1763_026:0476c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三種人。",
        "from": "T37n1763_026:0476c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契經所不治。",
        "from": "T37n1763_026:0476c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是說畢竟二乘之病。",
        "from": "T37n1763_026:0476c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞餘方等。",
        "from": "T37n1763_026:0476c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖發心。",
        "from": "T37n1763_026:0476c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知佛常終。",
        "from": "T37n1763_026:0476c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不成佛不名畢竟者。",
        "from": "T37n1763_026:0476c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸人。",
        "from": "T37n1763_026:0476c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞涅槃生信。",
        "from": "T37n1763_026:0476c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須外治。",
        "from": "T37n1763_026:0476c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自能成佛。",
        "from": "T37n1763_026:0476c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷疑說也。",
        "from": "T37n1763_026:0476c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得病行之名。",
        "from": "T37n1763_026:0476c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事盡於此也。",
        "from": "T37n1763_026:0476c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_026:0476c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大涅槃。",
        "from": "T37n1763_026:0476c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是諸佛甚深禪定。",
        "from": "T37n1763_026:0476c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非是二乘所行之處。",
        "from": "T37n1763_026:0476c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入此深定。",
        "from": "T37n1763_026:0476c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰畢竟入於涅槃也。",
        "from": "T37n1763_026:0476c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非永盡滅入涅槃故。",
        "from": "T37n1763_026:0476c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不名畢竟入於涅槃也。",
        "from": "T37n1763_026:0476c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟不畢竟義。",
        "from": "T37n1763_026:0476c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存於此也。",
        "from": "T37n1763_026:0476c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_026:0476c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟不畢竟。",
        "from": "T37n1763_026:0476c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有其旨。",
        "from": "T37n1763_026:0476c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非不定也。",
        "from": "T37n1763_026:0476c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但執言失旨。",
        "from": "T37n1763_026:0476c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為不定之說。",
        "from": "T37n1763_026:0476c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑網是生。",
        "from": "T37n1763_026:0476c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得旨則知定說。",
        "from": "T37n1763_026:0476c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑網斷矣。",
        "from": "T37n1763_026:0476c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一義昔教皆說畢竟永盡。",
        "from": "T37n1763_026:0477a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今因現病。",
        "from": "T37n1763_026:0477a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以表無病。",
        "from": "T37n1763_026:0477a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得顯病是密語。",
        "from": "T37n1763_026:0477a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因廣說如來之密語也。",
        "from": "T37n1763_026:0477a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉有五種人於是大乘(至)有病行處非如來也。",
        "from": "T37n1763_026:0477a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_026:0477a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_026:0477a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次答云何而得近最勝無上道也。",
        "from": "T37n1763_026:0477a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上云自然得成。",
        "from": "T37n1763_026:0477a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今轉近為得。",
        "from": "T37n1763_026:0477a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但說五人者。",
        "from": "T37n1763_026:0477a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以斷結定故。",
        "from": "T37n1763_026:0477a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫定位。",
        "from": "T37n1763_026:0477a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無劫數之限也。",
        "from": "T37n1763_026:0477a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬劫者。",
        "from": "T37n1763_026:0477a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後云得菩提心。",
        "from": "T37n1763_026:0477a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云八萬劫住處。",
        "from": "T37n1763_026:0477a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是小涅槃。",
        "from": "T37n1763_026:0477a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似是菩提心成就耳。",
        "from": "T37n1763_026:0477a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟煩惱。",
        "from": "T37n1763_026:0477a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小乘斷之。",
        "from": "T37n1763_026:0477a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不必在菩薩。",
        "from": "T37n1763_026:0477a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫數如此。",
        "from": "T37n1763_026:0477a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知偏愛易斷。",
        "from": "T37n1763_026:0477a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等悲難成也。",
        "from": "T37n1763_026:0477a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_026:0477a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因表如來無病得命病者。",
        "from": "T37n1763_026:0477a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心之義也。",
        "from": "T37n1763_026:0477a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘有病。",
        "from": "T37n1763_026:0477a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能發心。",
        "from": "T37n1763_026:0477a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要從佛聞法也。",
        "from": "T37n1763_026:0477a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫利根雖不從佛聞法。",
        "from": "T37n1763_026:0477a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而自發心。",
        "from": "T37n1763_026:0477a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知此二人。",
        "from": "T37n1763_026:0477a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以得近無上道也。",
        "from": "T37n1763_026:0477a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇讖曰。",
        "from": "T37n1763_026:0477a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五種人者。",
        "from": "T37n1763_026:0477a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從須陀洹。",
        "from": "T37n1763_026:0477a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至緣覺。",
        "from": "T37n1763_026:0477a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一果准兩地。",
        "from": "T37n1763_026:0477a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是以初地二地准初果。",
        "from": "T37n1763_026:0477a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至九地准緣覺也。",
        "from": "T37n1763_026:0477a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第二十六",
        "from": "T37n1763_026:0477a17_0",
        "context_with_next_sentence": false
    }
]