[
    {
        "source_sentence": "新修往生傳中卷佚文",
        "from": "X78n1546_002:0163b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋道綽并州人。",
        "from": "X78n1546_002:0163b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄家已來歷訪名師。",
        "from": "X78n1546_002:0163b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後聞瓚禪師理行兼著卑志事之。",
        "from": "X78n1546_002:0163b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋憇石壁谷玄忠寺。",
        "from": "X78n1546_002:0163b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺即後魏曇鸞法師舊止也。",
        "from": "X78n1546_002:0163b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鸞於其寺久薀淨業。",
        "from": "X78n1546_002:0163b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至其亡日疊有祥異。",
        "from": "X78n1546_002:0163b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郡人奇之。",
        "from": "X78n1546_002:0163b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捃摭其事刻之於石。",
        "from": "X78n1546_002:0163b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綽讀其文彌深信。",
        "from": "X78n1546_002:0163b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "講涅槃經二十餘徧。",
        "from": "X78n1546_002:0163b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每歎鸞法師智德高遠尚捨講說。",
        "from": "X78n1546_002:0163b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修淨土業已得往生。",
        "from": "X78n1546_002:0163b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況我小子所解何足為多而恃此為德。",
        "from": "X78n1546_002:0163b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即捨講說修淨土行。",
        "from": "X78n1546_002:0163b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一向專念阿彌陀佛。",
        "from": "X78n1546_002:0163b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日別七萬徧為限。",
        "from": "X78n1546_002:0163b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮拜供養相續無間。",
        "from": "X78n1546_002:0163b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為開悟有緣每講觀經二百餘徧。",
        "from": "X78n1546_002:0163b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示誨道俗。",
        "from": "X78n1546_002:0163b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七歲已上念阿彌陀佛。",
        "from": "X78n1546_002:0163b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教用小豆為數。",
        "from": "X78n1546_002:0163b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上者念得九十八十石。",
        "from": "X78n1546_002:0163b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中者念得五十石。",
        "from": "X78n1546_002:0163b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下者三十石。",
        "from": "X78n1546_002:0163b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教諸有緣。",
        "from": "X78n1546_002:0163b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不向西方大小便利涕唾。",
        "from": "X78n1546_002:0163b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不背西坐。",
        "from": "X78n1546_002:0163b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲々相注弘淨土業。",
        "from": "X78n1546_002:0163b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每見佛住空中。",
        "from": "X78n1546_002:0163b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天華下散大如錢。",
        "from": "X78n1546_002:0163b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其色鮮白遍滿虛空。",
        "from": "X78n1546_002:0163b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾以手承花。",
        "from": "X78n1546_002:0163b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人々皆得七日不萎。",
        "from": "X78n1546_002:0163b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又撰安樂集兩卷。",
        "from": "X78n1546_002:0163b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見行於世。",
        "from": "X78n1546_002:0163b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐貞觀三年四月八日道俗集其寺。",
        "from": "X78n1546_002:0163b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示如來之降生也。",
        "from": "X78n1546_002:0163b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且見鸞於空中乘七寶船。",
        "from": "X78n1546_002:0163b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由其上而指綽曰。",
        "from": "X78n1546_002:0163b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於淨土堂宇已成。",
        "from": "X78n1546_002:0163b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但惟報命未盡。",
        "from": "X78n1546_002:0163b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾復見化佛與化菩薩飄颻在空。",
        "from": "X78n1546_002:0163b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾乃驚歎大生信服。",
        "from": "X78n1546_002:0163c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖夫無種闡提之人亦率服之。",
        "from": "X78n1546_002:0163c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以故唐初并汾諸郡重漬淨業由綽盛焉。",
        "from": "X78n1546_002:0163c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞觀十九年四月二十四遇疾。",
        "from": "X78n1546_002:0163c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道俗省覲者不可勝記。",
        "from": "X78n1546_002:0163c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至二十七日欲終時。",
        "from": "X78n1546_002:0163c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有聖眾從西方來。",
        "from": "X78n1546_002:0163c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩道白光入房徹照。",
        "from": "X78n1546_002:0163c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終訖乃滅。",
        "from": "X78n1546_002:0163c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲殯時復有異光於空中現。",
        "from": "X78n1546_002:0163c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殯訖乃止。",
        "from": "X78n1546_002:0163c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有紫雲於塔上三度現。",
        "from": "X78n1546_002:0163c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾人同見斯瑞(中卷歟出類聚淨土五祖傳)。",
        "from": "X78n1546_002:0163c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋善導不悉何許人。",
        "from": "X78n1546_002:0163c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遊寰寓求訪道津。",
        "from": "X78n1546_002:0163c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐貞觀中。",
        "from": "X78n1546_002:0163c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見西河綽禪師行方等懺。",
        "from": "X78n1546_002:0163c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及淨土九品道場講觀經。",
        "from": "X78n1546_002:0163c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導大喜曰。",
        "from": "X78n1546_002:0163c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真入佛道之津要。",
        "from": "X78n1546_002:0163c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修餘行業。",
        "from": "X78n1546_002:0163c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迂僻難成。",
        "from": "X78n1546_002:0163c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟此觀門速超生死。",
        "from": "X78n1546_002:0163c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾得之矣。",
        "from": "X78n1546_002:0163c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是篤勤精苦若救頭然。",
        "from": "X78n1546_002:0163c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續至京師。",
        "from": "X78n1546_002:0163c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "激發四部弟子無問貴賤。",
        "from": "X78n1546_002:0163c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼屠沽輩亦擊悟焉。",
        "from": "X78n1546_002:0163c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導入堂則合掌[跍*月]跪。",
        "from": "X78n1546_002:0163c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心念佛非力竭不休。",
        "from": "X78n1546_002:0163c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至寒冷亦須流汗。",
        "from": "X78n1546_002:0163c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此相狀表於至誠。",
        "from": "X78n1546_002:0163c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出即為人說淨土法。",
        "from": "X78n1546_002:0163c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化諸道俗。",
        "from": "X78n1546_002:0163c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令發道心修淨土行。",
        "from": "X78n1546_002:0163c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有暫時不為利益。",
        "from": "X78n1546_002:0163c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十餘年無別寢處。",
        "from": "X78n1546_002:0163c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不暫睡眠。",
        "from": "X78n1546_002:0163c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除洗浴外曾不脫衣。",
        "from": "X78n1546_002:0163c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般舟行道。",
        "from": "X78n1546_002:0163c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛方等。",
        "from": "X78n1546_002:0163c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為己任。",
        "from": "X78n1546_002:0163c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持戒品。",
        "from": "X78n1546_002:0163c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纖毫不犯。",
        "from": "X78n1546_002:0163c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾不舉目視女人。",
        "from": "X78n1546_002:0163c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切名利無心起念。",
        "from": "X78n1546_002:0163c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綺詞戱笑亦未之有。",
        "from": "X78n1546_002:0163c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所行之處。",
        "from": "X78n1546_002:0163c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爭申供養。",
        "from": "X78n1546_002:0163c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食衣服四事豐饒。",
        "from": "X78n1546_002:0163c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不自入并將廻施。",
        "from": "X78n1546_002:0163c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好食送大厨。",
        "from": "X78n1546_002:0163c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養徒眾。",
        "from": "X78n1546_002:0163c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯食麤惡纔得支身。",
        "from": "X78n1546_002:0163c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳酪醍醐皆不飲噉。",
        "from": "X78n1546_002:0163c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有嚫施將寫阿彌陀經。",
        "from": "X78n1546_002:0164a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十萬餘卷。",
        "from": "X78n1546_002:0164a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所畵淨土變相三百餘堵。",
        "from": "X78n1546_002:0164a01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在之處。",
        "from": "X78n1546_002:0164a02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見壞伽藍及故塼塔等。",
        "from": "X78n1546_002:0164a02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉營造。",
        "from": "X78n1546_002:0164a03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然燈續明歲常不絕。",
        "from": "X78n1546_002:0164a03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三衣瓶鉢不使人持洗。",
        "from": "X78n1546_002:0164a03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始終無改化諸有緣。",
        "from": "X78n1546_002:0164a04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每自獨行不共眾去。",
        "from": "X78n1546_002:0164a04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐與人行談論世事妨修行業。",
        "from": "X78n1546_002:0164a05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有暫申禮謁聞說少法。",
        "from": "X78n1546_002:0164a05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或得同預道場親承教訓。",
        "from": "X78n1546_002:0164a06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或曾不見聞披尋教義。",
        "from": "X78n1546_002:0164a07_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或展轉授淨土法門。",
        "from": "X78n1546_002:0164a07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "京華諸州僧尼士女。",
        "from": "X78n1546_002:0164a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或投身高嶺。",
        "from": "X78n1546_002:0164a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或寄命深泉。",
        "from": "X78n1546_002:0164a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或自墮高枝。",
        "from": "X78n1546_002:0164a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚身供養者略聞四遠。",
        "from": "X78n1546_002:0164a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向百餘人。",
        "from": "X78n1546_002:0164a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸修梵行棄捨妻子者。",
        "from": "X78n1546_002:0164a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦阿彌陀經十萬至三十萬徧者。",
        "from": "X78n1546_002:0164a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念阿彌陀佛日得一萬五千至十萬徧者。",
        "from": "X78n1546_002:0164a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及得念佛三昧往生淨土者。",
        "from": "X78n1546_002:0164a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可知數。",
        "from": "X78n1546_002:0164a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或聞導曰。",
        "from": "X78n1546_002:0164a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛之善生淨土耶。",
        "from": "X78n1546_002:0164a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對曰。",
        "from": "X78n1546_002:0164a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所念遂汝所願。",
        "from": "X78n1546_002:0164a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對已導乃自念阿彌陀佛。",
        "from": "X78n1546_002:0164a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一聲則有一道光明從其口出。",
        "from": "X78n1546_002:0164a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十聲至百聲光亦如此。",
        "from": "X78n1546_002:0164a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導謂人曰。",
        "from": "X78n1546_002:0164a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此身可厭。",
        "from": "X78n1546_002:0164a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苦逼迫。",
        "from": "X78n1546_002:0164a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情偽變易無暫休息。",
        "from": "X78n1546_002:0164a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃登所居寺前柳樹。",
        "from": "X78n1546_002:0164a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西向願曰。",
        "from": "X78n1546_002:0164a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願佛威神驟以接我。",
        "from": "X78n1546_002:0164a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀音勢至亦來助我。",
        "from": "X78n1546_002:0164a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我此心不失正念不起驚怖不於彌陀法中以生退墮。",
        "from": "X78n1546_002:0164a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願畢於其樹上。",
        "from": "X78n1546_002:0164a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投身自絕。",
        "from": "X78n1546_002:0164a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時京師士大夫傾誠歸信咸收其骨以葬。",
        "from": "X78n1546_002:0164a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高宗皇帝知其念佛口出光明。",
        "from": "X78n1546_002:0164a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又知捨報之時精至如此。",
        "from": "X78n1546_002:0164a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜寺額為光明焉(同前。",
        "from": "X78n1546_002:0164a22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳通玄義分記卷一云中卷三十三人其二十五二十六有善導二人此傳盍中卷第二十五人)。",
        "from": "X78n1546_002:0164a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐往生高僧善導臨淄人也。",
        "from": "X78n1546_002:0164a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼投密州明勝法師出家。",
        "from": "X78n1546_002:0164a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦法華維摩。",
        "from": "X78n1546_002:0164b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽自思曰教門非入一道一途。",
        "from": "X78n1546_002:0164b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不契機功即徒設。",
        "from": "X78n1546_002:0164b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是投大藏經。",
        "from": "X78n1546_002:0164b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信手探之得無量壽觀經。",
        "from": "X78n1546_002:0164b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便喜誦習於十六觀。",
        "from": "X78n1546_002:0164b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒諦思惟忱節西方以為冥契。",
        "from": "X78n1546_002:0164b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欣惠遠法師勝躅。",
        "from": "X78n1546_002:0164b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂往廬山觀其遺範。",
        "from": "X78n1546_002:0164b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃豁然增思。",
        "from": "X78n1546_002:0164b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自後歷訪名德。",
        "from": "X78n1546_002:0164b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幽求妙門。",
        "from": "X78n1546_002:0164b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功微理深未有出般舟三昧者。",
        "from": "X78n1546_002:0164b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢命斯道後遁迹終南悟真寺。",
        "from": "X78n1546_002:0164b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未逾數載。",
        "from": "X78n1546_002:0164b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想忘疲已成深妙。",
        "from": "X78n1546_002:0164b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於定中。",
        "from": "X78n1546_002:0164b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備觀寶閣瑤池金座宛在目前。",
        "from": "X78n1546_002:0164b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涕泗交流舉身投地。",
        "from": "X78n1546_002:0164b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既獲勝定隨方利物。",
        "from": "X78n1546_002:0164b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初聞綽禪師晉陽開闡欲不遠千里從而問津。",
        "from": "X78n1546_002:0164b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時逢玄冬之首。",
        "from": "X78n1546_002:0164b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風飄落葉填滿深坑。",
        "from": "X78n1546_002:0164b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂挈瓶鉢入中安坐。",
        "from": "X78n1546_002:0164b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心念佛不覺已度數日。",
        "from": "X78n1546_002:0164b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃聞空中聲曰可得前行。",
        "from": "X78n1546_002:0164b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在遊履無復罣礙。",
        "from": "X78n1546_002:0164b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂出抗進程至綽禪師所展會夙心。",
        "from": "X78n1546_002:0164b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綽公即授與無量壽經。",
        "from": "X78n1546_002:0164b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導披卷詳之。",
        "from": "X78n1546_002:0164b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比來所。",
        "from": "X78n1546_002:0164b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩宛在。",
        "from": "X78n1546_002:0164b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因即入定七日不起。",
        "from": "X78n1546_002:0164b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或問導曰。",
        "from": "X78n1546_002:0164b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子念佛。",
        "from": "X78n1546_002:0164b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得往生否。",
        "from": "X78n1546_002:0164b16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導令辨一莖蓮花。",
        "from": "X78n1546_002:0164b17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置之佛前。",
        "from": "X78n1546_002:0164b17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道七日花不萎悴即得往生。",
        "from": "X78n1546_002:0164b17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依之七日果然花不萎黃。",
        "from": "X78n1546_002:0164b18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綽歎其深詣。",
        "from": "X78n1546_002:0164b18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因請入定觀當得生否。",
        "from": "X78n1546_002:0164b19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導即入定須叟報曰師當懺三罪方可往生。",
        "from": "X78n1546_002:0164b19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者。",
        "from": "X78n1546_002:0164b20_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師甞安佛尊像。",
        "from": "X78n1546_002:0164b20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在檐牖下自處深房。",
        "from": "X78n1546_002:0164b21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者。",
        "from": "X78n1546_002:0164b21_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驅使策役出家人。",
        "from": "X78n1546_002:0164b21_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者。",
        "from": "X78n1546_002:0164b22_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "營造屋宇損傷蟲命。",
        "from": "X78n1546_002:0164b22_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師宜於十方佛前懺第一罪。",
        "from": "X78n1546_002:0164b22_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四方僧前懺第二罪。",
        "from": "X78n1546_002:0164b23_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切眾生前懺第三罪。",
        "from": "X78n1546_002:0164b23_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綽公靜思往咎。",
        "from": "X78n1546_002:0164b24_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆曰不虛。",
        "from": "X78n1546_002:0164b24_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是洗心悔謝訖而見導。",
        "from": "X78n1546_002:0164c01_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即曰師罪滅矣。",
        "from": "X78n1546_002:0164c01_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後當有白光照燭。",
        "from": "X78n1546_002:0164c01_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是師往生之相也。",
        "from": "X78n1546_002:0164c02_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導化洽京輩道俗歸心者如市。",
        "from": "X78n1546_002:0164c02_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於所住寺院中。",
        "from": "X78n1546_002:0164c03_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫淨土變相。",
        "from": "X78n1546_002:0164c03_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽催令速成就。",
        "from": "X78n1546_002:0164c04_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或問其故則曰。",
        "from": "X78n1546_002:0164c04_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾將往生。",
        "from": "X78n1546_002:0164c04_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可住三兩夕而已。",
        "from": "X78n1546_002:0164c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽然微疾掩室怡然長逝。",
        "from": "X78n1546_002:0164c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春秋六十有九。",
        "from": "X78n1546_002:0164c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體柔軟。",
        "from": "X78n1546_002:0164c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "容色如常。",
        "from": "X78n1546_002:0164c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異香音樂久而方歇。",
        "from": "X78n1546_002:0164c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時永隆二年三月十四日(同前。",
        "from": "X78n1546_002:0164c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中卷第二十六人歟)",
        "from": "X78n1546_002:0164c08_1",
        "context_with_next_sentence": false
    }
]