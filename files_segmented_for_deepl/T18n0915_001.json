[
    {
        "source_sentence": "受菩提心戒儀一卷",
        "from": "T18n0915_001:0940b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T18n0915_001:0940b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒",
        "from": "T18n0915_001:0940b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正號大廣智大興善寺三藏沙門",
        "from": "T18n0915_001:0940b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空奉　詔譯",
        "from": "T18n0915_001:0940b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　弟子某甲等　　稽首歸命禮",
        "from": "T18n0915_001:0940b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遍虛空法界　　十方諸如來",
        "from": "T18n0915_001:0940b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　瑜伽總持教　　諸大菩薩眾",
        "from": "T18n0915_001:0940b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　及禮菩提心　　能滿福智聚",
        "from": "T18n0915_001:0940b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　令得無上覺　　是故稽首禮",
        "from": "T18n0915_001:0940b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛真言曰。",
        "from": "T18n0915_001:0940b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛他孽多(引)跛娜滿那喃迦嚧彌次應運心供養。",
        "from": "T18n0915_001:0940b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　弟子某甲等　　十方一切剎",
        "from": "T18n0915_001:0940b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所有諸供養　　花鬘燈塗香",
        "from": "T18n0915_001:0940b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　飲食幢旛蓋　　誠心我奉獻",
        "from": "T18n0915_001:0940b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸佛大菩薩　　及諸賢聖等",
        "from": "T18n0915_001:0940b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我今至心禮",
        "from": "T18n0915_001:0940b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普供養虛空藏真言曰。",
        "from": "T18n0915_001:0940b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵誐誐曩(引)三婆嚩嚩日囉(二合)斛次應懺悔。",
        "from": "T18n0915_001:0940b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　弟子某甲等　　今對一切佛",
        "from": "T18n0915_001:0940c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸大菩薩眾　　自從過去世",
        "from": "T18n0915_001:0940c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無始流轉中　　乃至於今日",
        "from": "T18n0915_001:0940c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愚迷真如性　　起虛妄分別",
        "from": "T18n0915_001:0940c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　貪瞋癡不善　　三業諸煩惱",
        "from": "T18n0915_001:0940c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　及以隨煩惱　　違犯他勝罪",
        "from": "T18n0915_001:0940c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　及餘罪愆等　　毀謗佛法僧",
        "from": "T18n0915_001:0940c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　侵奪三寶物　　廣作無間罪",
        "from": "T18n0915_001:0940c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無量無邊劫　　不可憶知數",
        "from": "T18n0915_001:0940c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自作教他作　　見聞及隨喜",
        "from": "T18n0915_001:0940c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　復依勝義諦　　真實微妙理",
        "from": "T18n0915_001:0940c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　聖慧眼觀察　　前後中三際",
        "from": "T18n0915_001:0940c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼皆無所得　　自心造分別",
        "from": "T18n0915_001:0940c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　虛妄不實故　　以為慧方便",
        "from": "T18n0915_001:0940c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　平等如虛空　　我悉皆懺悔",
        "from": "T18n0915_001:0940c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　誓不敢覆藏　　從今懺已後",
        "from": "T18n0915_001:0940c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　永斷不復作　　乃至成正覺",
        "from": "T18n0915_001:0940c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　終更不違犯　　唯願十方佛",
        "from": "T18n0915_001:0940c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切菩薩眾　　哀愍加護我",
        "from": "T18n0915_001:0940c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　令我罪障滅　　是故至心禮",
        "from": "T18n0915_001:0940c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔滅罪真言曰。",
        "from": "T18n0915_001:0940c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩跛波捺賀(引)曩嚩日囉(二合)野(引)娑嚩(二合引)賀(引)次當受三歸依。",
        "from": "T18n0915_001:0940c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　弟子某甲等　　從今日以往",
        "from": "T18n0915_001:0940c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸依諸如來　　五智三身佛",
        "from": "T18n0915_001:0940c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸依金剛乘　　自性真如法",
        "from": "T18n0915_001:0940c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸依不退轉　　大悲菩薩僧",
        "from": "T18n0915_001:0940c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸依三寶竟　　終不更歸依",
        "from": "T18n0915_001:0940c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自利邪見道　　我今至心禮",
        "from": "T18n0915_001:0941a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三歸依真言曰。",
        "from": "T18n0915_001:0941a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵步(引)欠",
        "from": "T18n0915_001:0941a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應受菩提心戒。",
        "from": "T18n0915_001:0941a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　弟子某甲等　　一切佛菩薩",
        "from": "T18n0915_001:0941a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　從今日以往　　乃至成正覺",
        "from": "T18n0915_001:0941a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　誓發菩提心",
        "from": "T18n0915_001:0941a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情無邊誓願度　福智無邊誓願集。",
        "from": "T18n0915_001:0941a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法無邊誓願學　如來無邊誓願事。",
        "from": "T18n0915_001:0941a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上菩提誓願成。",
        "from": "T18n0915_001:0941a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　今所發覺心　　遠離諸性相",
        "from": "T18n0915_001:0941a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　蘊界及處等　　能取所取執",
        "from": "T18n0915_001:0941a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸法悉無我　　平等如虛空",
        "from": "T18n0915_001:0941a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自心本不生　　空性圓寂故",
        "from": "T18n0915_001:0941a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如諸佛菩薩　　發大菩提心",
        "from": "T18n0915_001:0941a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我今如是發　　是故至心禮",
        "from": "T18n0915_001:0941a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦受菩提心戒真言曰。",
        "from": "T18n0915_001:0941a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵[曰/月]地唧多母怚波(二合)那野(引)彌最上乘教受發菩提心戒懺悔文弟子某甲等。",
        "from": "T18n0915_001:0941a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命十方一切諸佛諸大菩薩大菩提心為大導師。",
        "from": "T18n0915_001:0941a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令我等離諸惡趣。",
        "from": "T18n0915_001:0941a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能示人天入大涅槃。",
        "from": "T18n0915_001:0941a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我今至心頂禮。",
        "from": "T18n0915_001:0941a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲等。",
        "from": "T18n0915_001:0941a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界所有一切最勝上妙。",
        "from": "T18n0915_001:0941a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香花旛蓋種種供養。",
        "from": "T18n0915_001:0941a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻一切諸佛菩薩。",
        "from": "T18n0915_001:0941a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心頂禮。",
        "from": "T18n0915_001:0941a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲等。",
        "from": "T18n0915_001:0941a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自從過去無始已來。",
        "from": "T18n0915_001:0941a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至今日。",
        "from": "T18n0915_001:0941a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪瞋癡等種種煩惱。",
        "from": "T18n0915_001:0941a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及忿恨等諸隨煩惱。",
        "from": "T18n0915_001:0941a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惱亂身心。",
        "from": "T18n0915_001:0941a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作一切身業不善殺盜邪婬。",
        "from": "T18n0915_001:0941a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口業不善妄言綺語惡口兩舌。",
        "from": "T18n0915_001:0941a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意業不善貪瞋邪見。",
        "from": "T18n0915_001:0941a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種煩惱。",
        "from": "T18n0915_001:0941b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始相續纏染其心。",
        "from": "T18n0915_001:0941b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令身口意造罪無量。",
        "from": "T18n0915_001:0941b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或殺父母殺阿羅漢。",
        "from": "T18n0915_001:0941b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出佛身血破和合僧。",
        "from": "T18n0915_001:0941b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀謗三寶打縛眾生。",
        "from": "T18n0915_001:0941b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破齋破戒飲酒食肉。",
        "from": "T18n0915_001:0941b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及食五辛。",
        "from": "T18n0915_001:0941b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等罪無量無邊。",
        "from": "T18n0915_001:0941b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可憶知。",
        "from": "T18n0915_001:0941b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日誠心發露懺悔。",
        "from": "T18n0915_001:0941b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一懺已後。",
        "from": "T18n0915_001:0941b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永斷相續更不敢造。",
        "from": "T18n0915_001:0941b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願十方一切諸佛諸大菩薩。",
        "from": "T18n0915_001:0941b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持護念。",
        "from": "T18n0915_001:0941b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令我等罪障銷滅。",
        "from": "T18n0915_001:0941b07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲等。",
        "from": "T18n0915_001:0941b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自從今身乃至當坐菩提道場。",
        "from": "T18n0915_001:0941b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間。",
        "from": "T18n0915_001:0941b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依如來無上三身。",
        "from": "T18n0915_001:0941b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依方廣大乘法藏。",
        "from": "T18n0915_001:0941b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依一切不退菩薩僧。",
        "from": "T18n0915_001:0941b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依佛竟。",
        "from": "T18n0915_001:0941b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依法竟。",
        "from": "T18n0915_001:0941b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依僧竟。",
        "from": "T18n0915_001:0941b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今已後更不歸依二乘外道。",
        "from": "T18n0915_001:0941b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願十方一切諸佛。",
        "from": "T18n0915_001:0941b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證知我等。",
        "from": "T18n0915_001:0941b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心頂禮。",
        "from": "T18n0915_001:0941b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲等。",
        "from": "T18n0915_001:0941b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從今身。",
        "from": "T18n0915_001:0941b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至當坐菩提道場。",
        "from": "T18n0915_001:0941b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間。",
        "from": "T18n0915_001:0941b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓發無上菩提心。",
        "from": "T18n0915_001:0941b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生無邊誓願度　　福智無邊誓願集　法門無邊誓願學　　如來無邊誓願事　無上菩提誓願成今所發心。",
        "from": "T18n0915_001:0941b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當遠離我法二相。",
        "from": "T18n0915_001:0941b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯明本覺。",
        "from": "T18n0915_001:0941b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如平等鏡智現前。",
        "from": "T18n0915_001:0941b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得善巧智。",
        "from": "T18n0915_001:0941b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足圓滿普賢之心。",
        "from": "T18n0915_001:0941b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願十方一切諸佛諸大菩薩證知我等。",
        "from": "T18n0915_001:0941b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心頂禮。",
        "from": "T18n0915_001:0941b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　南無東方阿閦佛　南無南方寶生佛　南無西方阿彌陀佛　南無北方不空成就佛　南無清淨法身毘盧遮那佛受菩提心戒儀一卷",
        "from": "T18n0915_001:0941b23_0",
