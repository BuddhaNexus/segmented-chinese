[
    {
        "source_sentence": "法華三昧行事運想補助儀",
        "from": "T46n1942_001:0955c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐國清沙門湛然撰",
        "from": "T46n1942_001:0955c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫禮懺法世雖同效。",
        "from": "T46n1942_001:0955c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事儀運想多不周旋。",
        "from": "T46n1942_001:0955c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或粗讀懺文半不通利。",
        "from": "T46n1942_001:0955c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或推力前拒理觀。",
        "from": "T46n1942_001:0955c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一無效精進之風。",
        "from": "T46n1942_001:0955c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闕入門之緒。",
        "from": "T46n1942_001:0955c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言勤修苦行非涅槃因。",
        "from": "T46n1942_001:0955c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但禮念軌儀文非不委。",
        "from": "T46n1942_001:0955c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以散情昏重想運難成。",
        "from": "T46n1942_001:0955c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予因天台再有詳補。",
        "from": "T46n1942_001:0955c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撮覽樞總使隨言作念隨念成想。",
        "from": "T46n1942_001:0955c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一瞻視如對目前。",
        "from": "T46n1942_001:0955c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶時刻不虛事法成辦。",
        "from": "T46n1942_001:0955c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依本文總歷十法。",
        "from": "T46n1942_001:0955c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結要事理。",
        "from": "T46n1942_001:0955c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初嚴淨道場(如無別屋亦可同間絕無己物方可外求)。",
        "from": "T46n1942_001:0955c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二淨身(新衣舊衣新染並得。",
        "from": "T46n1942_001:0955c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無此二澣舊勝者)。",
        "from": "T46n1942_001:0955c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三三業供養(若總禮三寶。",
        "from": "T46n1942_001:0955c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未須一一隨方想念。",
        "from": "T46n1942_001:0955c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但想己身及十方諸佛。",
        "from": "T46n1942_001:0955c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實相理體本無能所故。",
        "from": "T46n1942_001:0955c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能禮所禮想。",
        "from": "T46n1942_001:0955c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無能所名法界海。",
        "from": "T46n1942_001:0955c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸眾生同見此理。",
        "from": "T46n1942_001:0955c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為同入)。",
        "from": "T46n1942_001:0955c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次運香(唱至受用作佛事竟。",
        "from": "T46n1942_001:0955c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次生想念不起此心。",
        "from": "T46n1942_001:0955c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能運到十方。",
        "from": "T46n1942_001:0955c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云一念。",
        "from": "T46n1942_001:0955c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想曰。",
        "from": "T46n1942_001:0955c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願此香華遍十方。",
        "from": "T46n1942_001:0955c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為微妙光明臺。",
        "from": "T46n1942_001:0955c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天音樂天寶香。",
        "from": "T46n1942_001:0955c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天餚膳天寶衣。",
        "from": "T46n1942_001:0955c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可思議妙法塵。",
        "from": "T46n1942_001:0955c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一塵出一切塵。",
        "from": "T46n1942_001:0955c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一塵出一切法。",
        "from": "T46n1942_001:0955c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋轉無閡互莊嚴。",
        "from": "T46n1942_001:0955c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍至一切三寶前。",
        "from": "T46n1942_001:0955c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方法界三寶前。",
        "from": "T46n1942_001:0955c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有我身修供養。",
        "from": "T46n1942_001:0955c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆悉遍法界。",
        "from": "T46n1942_001:0955c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼無雜無障閡。",
        "from": "T46n1942_001:0955c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際作佛事普熏法界。",
        "from": "T46n1942_001:0955c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸眾生蒙熏皆發菩提心。",
        "from": "T46n1942_001:0955c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同入無生證佛智)。",
        "from": "T46n1942_001:0955c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請佛(我三業性如虛空。",
        "from": "T46n1942_001:0955c27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼亦如是。",
        "from": "T46n1942_001:0955c28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不起真際為眾生。",
        "from": "T46n1942_001:0955c28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與眾俱來受供養)。",
        "from": "T46n1942_001:0955c28_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次請佛菩薩(但改牟尼及形相來處)。",
        "from": "T46n1942_001:0955c28_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五歎佛(偈前一一別想。",
        "from": "T46n1942_001:0955c29_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "己身在三寶前立。",
        "from": "T46n1942_001:0955c29_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次口宣偈隨聲運想。",
        "from": "T46n1942_001:0955c29_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之身心本無生滅。",
        "from": "T46n1942_001:0955c29_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故雖稱歎如影如響)。",
        "from": "T46n1942_001:0956a01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六禮佛(當唱一心時。",
        "from": "T46n1942_001:0956a01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先專至敬禮。",
        "from": "T46n1942_001:0956a01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為事一心。",
        "from": "T46n1942_001:0956a01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想能所為理一心。",
        "from": "T46n1942_001:0956a01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應想曰。",
        "from": "T46n1942_001:0956a02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能禮所禮性空寂。",
        "from": "T46n1942_001:0956a02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感應道交難思議。",
        "from": "T46n1942_001:0956a02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我此道場如帝珠。",
        "from": "T46n1942_001:0956a02_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼影現中。",
        "from": "T46n1942_001:0956a02_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我身影現如來前。",
        "from": "T46n1942_001:0956a02_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭面接足歸命禮)。",
        "from": "T46n1942_001:0956a03_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多寶佛(多寶如來影現中。",
        "from": "T46n1942_001:0956a03_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我身影現多寶前。",
        "from": "T46n1942_001:0956a03_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘同上想)。",
        "from": "T46n1942_001:0956a03_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分身(分身諸佛亦同上想。",
        "from": "T46n1942_001:0956a03_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": ")東方諸佛(東方諸佛影現中。",
        "from": "T46n1942_001:0956a04_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆影現諸佛前。",
        "from": "T46n1942_001:0956a04_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至十方一一皆爾)。",
        "from": "T46n1942_001:0956a04_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸佛(乃至過現未來並同上想)。",
        "from": "T46n1942_001:0956a05_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利形像等(諸佛法身如虛空。",
        "from": "T46n1942_001:0956a05_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化事住世難思議。",
        "from": "T46n1942_001:0956a06_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆影現化事前。",
        "from": "T46n1942_001:0956a06_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆悉歸命禮)。",
        "from": "T46n1942_001:0956a06_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法(真空法界如虛空。",
        "from": "T46n1942_001:0956a06_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住法寶難思議。",
        "from": "T46n1942_001:0956a06_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆影現法寶前。",
        "from": "T46n1942_001:0956a07_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不皆悉歸命禮)。",
        "from": "T46n1942_001:0956a07_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩(彼一一菩薩影現中。",
        "from": "T46n1942_001:0956a07_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至下方亦如是)舍利弗等(先想聲聞皆是本來諸佛。",
        "from": "T46n1942_001:0956a07_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今從初說故云聲聞)。",
        "from": "T46n1942_001:0956a08_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩(為滅障故接足禮餘同上)。",
        "from": "T46n1942_001:0956a08_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為(我及眾生無始常為三業六根重罪所障。",
        "from": "T46n1942_001:0956a09_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見諸佛。",
        "from": "T46n1942_001:0956a09_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知出要。",
        "from": "T46n1942_001:0956a09_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但順生死不知妙理。",
        "from": "T46n1942_001:0956a09_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今雖知猶與一切眾生同為一切重罪所障。",
        "from": "T46n1942_001:0956a10_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今對普賢十方諸佛前。",
        "from": "T46n1942_001:0956a10_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為眾生歸命懺悔。",
        "from": "T46n1942_001:0956a10_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願加護令障消滅)。",
        "from": "T46n1942_001:0956a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七懺悔應運逆順十心云(我與眾生無始來。",
        "from": "T46n1942_001:0956a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今由愛見故。",
        "from": "T46n1942_001:0956a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內計我人外加惡友不隨喜他一毫之善。",
        "from": "T46n1942_001:0956a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯遍三業廣作眾罪。",
        "from": "T46n1942_001:0956a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事雖不廣惡心遍布。",
        "from": "T46n1942_001:0956a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜相續無有間斷。",
        "from": "T46n1942_001:0956a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆諱過失不欲人知。",
        "from": "T46n1942_001:0956a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不畏惡道無慚無愧。",
        "from": "T46n1942_001:0956a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撥無因果。",
        "from": "T46n1942_001:0956a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故於今日對十方佛普賢大師。",
        "from": "T46n1942_001:0956a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深信因果生重慚愧。",
        "from": "T46n1942_001:0956a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生大怖畏。",
        "from": "T46n1942_001:0956a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發露懺悔斷相續心。",
        "from": "T46n1942_001:0956a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心斷惡修善。",
        "from": "T46n1942_001:0956a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤策三業翻昔重過。",
        "from": "T46n1942_001:0956a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜凡聖一毫之善。",
        "from": "T46n1942_001:0956a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念十方佛有大福慧。",
        "from": "T46n1942_001:0956a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能救拔我及諸眾生從二死海置三德岸。",
        "from": "T46n1942_001:0956a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始來不知諸法本性空寂。",
        "from": "T46n1942_001:0956a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣造眾惡。",
        "from": "T46n1942_001:0956a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今知空寂為求菩提。",
        "from": "T46n1942_001:0956a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾生故。",
        "from": "T46n1942_001:0956a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣修諸善遍斷眾惡。",
        "from": "T46n1942_001:0956a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願普賢慈悲攝受)。",
        "from": "T46n1942_001:0956a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次懺六根(至文並須略知。",
        "from": "T46n1942_001:0956a16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文相含於逆順十種心相縱有闕略。",
        "from": "T46n1942_001:0956a16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在四悔中於菩提中見不清淨等。",
        "from": "T46n1942_001:0956a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是橫計我人。",
        "from": "T46n1942_001:0956a17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那是觀罪性空。",
        "from": "T46n1942_001:0956a17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世尊是念十方佛。",
        "from": "T46n1942_001:0956a17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後四悔中有發隨喜心。",
        "from": "T46n1942_001:0956a18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣令畢竟清淨。",
        "from": "T46n1942_001:0956a18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是斷相續心歸向普賢及一切世尊。",
        "from": "T46n1942_001:0956a18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為眾生發菩提心。",
        "from": "T46n1942_001:0956a18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一悔文皆具三業。",
        "from": "T46n1942_001:0956a19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是修功補過等說過等。",
        "from": "T46n1942_001:0956a19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是發露過失。",
        "from": "T46n1942_001:0956a19_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮惡道生大怖畏等。",
        "from": "T46n1942_001:0956a19_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是怖畏惡道及生慚愧。",
        "from": "T46n1942_001:0956a19_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信因果等。",
        "from": "T46n1942_001:0956a20_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡宣悔詞須加事想破於愛心。",
        "from": "T46n1942_001:0956a20_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至觀罪性空總想事理悔於見心。",
        "from": "T46n1942_001:0956a20_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲更略眼耳鼻三根。",
        "from": "T46n1942_001:0956a20_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可或時用。",
        "from": "T46n1942_001:0956a20_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若舌身意三根是業故不得。",
        "from": "T46n1942_001:0956a21_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全略前三根縱略。",
        "from": "T46n1942_001:0956a21_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並使不失。",
        "from": "T46n1942_001:0956a21_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逆順十心大意即得)。",
        "from": "T46n1942_001:0956a21_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請(十方諸佛以道眼力故知我見我。",
        "from": "T46n1942_001:0956a21_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請諸佛。",
        "from": "T46n1942_001:0956a22_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願久住轉正法輪。",
        "from": "T46n1942_001:0956a22_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在生處常能勸請)。",
        "from": "T46n1942_001:0956a22_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜(十方凡聖一毫之善。",
        "from": "T46n1942_001:0956a22_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆隨喜。",
        "from": "T46n1942_001:0956a23_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德能令見者生喜。",
        "from": "T46n1942_001:0956a23_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我喜)。",
        "from": "T46n1942_001:0956a23_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向(無始來時乃至今日盡未來際一毫之善。",
        "from": "T46n1942_001:0956a23_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以懺悔勸請隨喜。",
        "from": "T46n1942_001:0956a24_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆同法界與諸眾生共成佛道)。",
        "from": "T46n1942_001:0956a24_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願(大體須存滅罪除障開顯法門滿四弘誓。",
        "from": "T46n1942_001:0956a24_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘者皆須順於菩提)。",
        "from": "T46n1942_001:0956b01_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道(欲行時更須正立想。",
        "from": "T46n1942_001:0956b01_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此道場猶如法界。",
        "from": "T46n1942_001:0956b01_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方三寶畟塞虛空。",
        "from": "T46n1942_001:0956b01_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以次回身旋遶法座想十方三寶心性寂滅。",
        "from": "T46n1942_001:0956b02_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "影現十方經聲如響。",
        "from": "T46n1942_001:0956b02_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想如夢梵聲亦然)。",
        "from": "T46n1942_001:0956b02_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三歸(一一各想三處三寶與頂禮俱運。",
        "from": "T46n1942_001:0956b02_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初文雖即直云十方。",
        "from": "T46n1942_001:0956b03_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意亦兼於三處。",
        "from": "T46n1942_001:0956b03_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若從懺悔已下凡云禮三寶者。",
        "from": "T46n1942_001:0956b03_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆須一一別起三想。",
        "from": "T46n1942_001:0956b03_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭三叩地。",
        "from": "T46n1942_001:0956b04_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一十方三寶。",
        "from": "T46n1942_001:0956b04_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二法華經中一切三寶。",
        "from": "T46n1942_001:0956b04_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三普賢大師。",
        "from": "T46n1942_001:0956b04_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對此三處求懺悔等。",
        "from": "T46n1942_001:0956b04_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又凡散華皆於言前散華之時。",
        "from": "T46n1942_001:0956b04_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想三寶及普賢上想已。",
        "from": "T46n1942_001:0956b05_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次宣懺悔等詞。",
        "from": "T46n1942_001:0956b05_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至後文中云。",
        "from": "T46n1942_001:0956b05_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散華等者心指前所散之華。",
        "from": "T46n1942_001:0956b05_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若焚香者送法座爐。",
        "from": "T46n1942_001:0956b05_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應想身各送爐。",
        "from": "T46n1942_001:0956b06_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍至十方一一法華經前乃至普熏一切三寶。",
        "from": "T46n1942_001:0956b06_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若焚手爐但先添香。",
        "from": "T46n1942_001:0956b06_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次執爐已隨事起想。",
        "from": "T46n1942_001:0956b06_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後口宣詞句)。",
        "from": "T46n1942_001:0956b07_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐禪文略。",
        "from": "T46n1942_001:0956b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如止觀十法成乘等。",
        "from": "T46n1942_001:0956b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行法華懺黃昏五更。",
        "from": "T46n1942_001:0956b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時促則此略文。",
        "from": "T46n1942_001:0956b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我(某甲)及法界眾生從無始世來。",
        "from": "T46n1942_001:0956b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明所覆顛倒迷惑。",
        "from": "T46n1942_001:0956b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而由六根三業不善廣造十惡四重五逆。",
        "from": "T46n1942_001:0956b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至十重四十八輕。",
        "from": "T46n1942_001:0956b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無邊說不可盡。",
        "from": "T46n1942_001:0956b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛常在世間法音不絕。",
        "from": "T46n1942_001:0956b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙香充塞法味盈空。",
        "from": "T46n1942_001:0956b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放淨光明照觸一切。",
        "from": "T46n1942_001:0956b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住妙理遍滿虛空。",
        "from": "T46n1942_001:0956b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無始來六根內盲三業昏暗。",
        "from": "T46n1942_001:0956b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見不聞不覺不知。",
        "from": "T46n1942_001:0956b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣長流生死。",
        "from": "T46n1942_001:0956b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經歷惡道百千萬劫。",
        "from": "T46n1942_001:0956b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永無出期。",
        "from": "T46n1942_001:0956b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T46n1942_001:0956b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦如來名毘盧遮那遍一切處。",
        "from": "T46n1942_001:0956b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知。",
        "from": "T46n1942_001:0956b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法無非佛法。",
        "from": "T46n1942_001:0956b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我不了隨無明流。",
        "from": "T46n1942_001:0956b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則於菩提中見不清淨。",
        "from": "T46n1942_001:0956b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於解脫中而起纏縛。",
        "from": "T46n1942_001:0956b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今始覺悟今始改悔。",
        "from": "T46n1942_001:0956b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生大慚愧生大怖畏。",
        "from": "T46n1942_001:0956b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持大乘三業供養。",
        "from": "T46n1942_001:0956b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸向普賢菩薩及一切世尊。",
        "from": "T46n1942_001:0956b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散華發露懺悔。",
        "from": "T46n1942_001:0956b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根三業所作永斷。",
        "from": "T46n1942_001:0956b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相續不復更造。",
        "from": "T46n1942_001:0956b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣今我與法界眾生三業六根無始所作。",
        "from": "T46n1942_001:0956b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現作當作自作教他見聞隨喜。",
        "from": "T46n1942_001:0956b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若憶不憶若識不識。",
        "from": "T46n1942_001:0956b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若疑不疑若覆若露。",
        "from": "T46n1942_001:0956b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟清淨(懺悔已歸命禮三寶)。",
        "from": "T46n1942_001:0956b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華三昧行事運想補助儀",
        "from": "T46n1942_001:0956b27_0",
        "context_with_next_sentence": false
    }
]