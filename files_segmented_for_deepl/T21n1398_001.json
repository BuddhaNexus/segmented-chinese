[
    {
        "source_sentence": "佛說智光滅一切業障陀羅尼",
        "from": "T21n1398_001:0914c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經",
        "from": "T21n1398_001:0914c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T21n1398_001:0914c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1398_001:0914c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1398_001:0914c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊在日月天子宮。",
        "from": "T21n1398_001:0914c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有智光如來真實如來金光聚如來。",
        "from": "T21n1398_001:0914c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深聲王如來忿怒如來寶月如來。",
        "from": "T21n1398_001:0914c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及普賢菩薩摩訶薩妙吉祥菩薩摩訶薩。",
        "from": "T21n1398_001:0914c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持地王菩薩摩訶薩金剛手菩薩摩訶薩。",
        "from": "T21n1398_001:0914c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與如是等諸佛菩薩摩訶薩俱。",
        "from": "T21n1398_001:0914c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T21n1398_001:0914c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸如來及菩薩摩訶薩等。",
        "from": "T21n1398_001:0914c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼宮內勝旛樓閣中。",
        "from": "T21n1398_001:0914c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各於坐閻浮檀金寶莊嚴師子之座。",
        "from": "T21n1398_001:0914c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巍巍堂堂由如金山威光晃然互相照耀。",
        "from": "T21n1398_001:0914c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時宮主日月天子。",
        "from": "T21n1398_001:0914c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見是諸佛及大菩薩。",
        "from": "T21n1398_001:0914c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威德熾盛超過諸天。",
        "from": "T21n1398_001:0914c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生希有心歡喜踊躍。",
        "from": "T21n1398_001:0914c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住立佛前內自思惟。",
        "from": "T21n1398_001:0914c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此諸佛及大菩薩。",
        "from": "T21n1398_001:0914c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是一切眾生界燈。",
        "from": "T21n1398_001:0914c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必能照破諸惡黑暗。",
        "from": "T21n1398_001:0914c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何令我復得陀羅尼變化智。",
        "from": "T21n1398_001:0914c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生於十方如彼威德。",
        "from": "T21n1398_001:0914c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與一切眾生而作照明。",
        "from": "T21n1398_001:0914c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時如來及諸佛菩薩摩訶薩等。",
        "from": "T21n1398_001:0914c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸悉知彼宮主天子心之所念。",
        "from": "T21n1398_001:0914c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊謂宮主日月天子言天子汝可諦聽我今為汝說佛菩薩名及陀羅尼。",
        "from": "T21n1398_001:0914c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時宮主日月天子受教而聽。",
        "from": "T21n1398_001:0915a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說佛菩薩名曰　曩謨智光如來曩謨真實如來。",
        "from": "T21n1398_001:0915a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨金光聚如來曩謨甚深聲王如來。",
        "from": "T21n1398_001:0915a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨我釋迦牟尼如來。",
        "from": "T21n1398_001:0915a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨忿怒如來曩謨寶月如來。",
        "from": "T21n1398_001:0915a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨普賢菩薩摩訶薩曩謨妙吉祥菩薩摩訶薩。",
        "from": "T21n1398_001:0915a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨持地王菩薩摩訶薩曩謨金剛手菩薩摩訶薩。",
        "from": "T21n1398_001:0915a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1398_001:0915a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引一)三野體難作芻那那作芻鉢囉(二合)婆度囉彌(引)蹉迦囉(二)伊伊體探娑酥囉那娑酥囉那(三)阿他娑伊蹉娑(四)吠(引)囉吠(引)羅(引五)波里拏(引)摩左嚕沒哩底(二合)儞(六)阿嚩尼阿囉尼(七)迦羅(引)波尼(引)迦羅(引)波尼(引八)覩嚕度細覩嚕度細(九)覩哩吐(二合)嚕度細(十)囉(引)遜底遜底(十一)閉哩閉哩(十二)度嚕度嚕度嚕度嚕(十三)迦(引)羅迦(引)羅(十四)娑蹉(引)酥娑蹉酥(十五)詣羅詣羅(十六)詣羅(引)波野詣羅(引)波野(十七)賀酥嚕賀酥嚕(十八)馱酥遜度遜部細蹉酥阿他娑(引)波儞惹野嚕哩(引)他酥哩(引)枳囉(十九)虞哩摩(二合)虞哩摩(二合二十)虞哩摩(二合)播尼計(引)魯計(引)魯(二十一)計(引)羅(引)播尼迦囉迦(二合引)哩(引二十二)楞度禰(引)度嚕禰(引二十三)摩賀(引)度嚕禰(引二十四)迦囉迦囉(二十五)枳哩枳哩(二十六)尾普細尾普細(二十七)度酥度酥(二十八)賀酥賀酥(二十九)賀娑播尼娑嚩(二合引)賀(引三十)爾時世尊說是陀羅尼已。",
        "from": "T21n1398_001:0915a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼普賢菩薩摩訶薩。",
        "from": "T21n1398_001:0915a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告宮主日月天子言。",
        "from": "T21n1398_001:0915a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子此陀羅尼乃是過去八十八俱胝諸佛同共宣說。",
        "from": "T21n1398_001:0915a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大慈大悲。",
        "from": "T21n1398_001:0915a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲擁護利益一切眾生今復宣說。",
        "from": "T21n1398_001:0915a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子此陀羅尼。",
        "from": "T21n1398_001:0915a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙希有難值難聞。",
        "from": "T21n1398_001:0915b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如優曇鉢花希有難見。",
        "from": "T21n1398_001:0915b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如如來出現世間希有難值。",
        "from": "T21n1398_001:0915b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼亦復如是。",
        "from": "T21n1398_001:0915b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子若佛滅後正法滅時。",
        "from": "T21n1398_001:0915b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有眾生造五逆罪。",
        "from": "T21n1398_001:0915b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必當墮於阿鼻地獄。",
        "from": "T21n1398_001:0915b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人若得值遇此陀羅尼。",
        "from": "T21n1398_001:0915b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能淨身心勇猛堅固。",
        "from": "T21n1398_001:0915b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二十一晝夜。",
        "from": "T21n1398_001:0915b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝三時夜三時。",
        "from": "T21n1398_001:0915b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心相續無令間斷。",
        "from": "T21n1398_001:0915b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此陀羅尼章句志心懺悔者。",
        "from": "T21n1398_001:0915b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人無間之業滅盡無餘。",
        "from": "T21n1398_001:0915b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子又復是人以此陀羅尼章句威德力故。",
        "from": "T21n1398_001:0915b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可使阿鼻地獄破為百分。",
        "from": "T21n1398_001:0915b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無有遺餘。",
        "from": "T21n1398_001:0915b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復令是中罪業眾生亦得解脫。",
        "from": "T21n1398_001:0915b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各生於南閻浮提悉得人身復得聞知。",
        "from": "T21n1398_001:0915b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是諸佛菩薩。",
        "from": "T21n1398_001:0915b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼功德之力救拔於我。",
        "from": "T21n1398_001:0915b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況持誦之人自身業耶。",
        "from": "T21n1398_001:0915b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時普賢菩薩。",
        "from": "T21n1398_001:0915b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復謂宮主日月天子言。",
        "from": "T21n1398_001:0915b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子我亦為欲利益安樂一切眾生。",
        "from": "T21n1398_001:0915b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末世之時持誦此陀羅尼者。",
        "from": "T21n1398_001:0915b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說陀羅尼而為擁護。",
        "from": "T21n1398_001:0915b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令一切人非人等無能惱亂故。",
        "from": "T21n1398_001:0915b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1398_001:0915b17_6",
        "context_with_next_sentence": true
    },
    {
