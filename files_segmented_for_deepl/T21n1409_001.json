[
    {
        "source_sentence": "佛說聖最勝陀羅尼經",
        "from": "T21n1409_001:0924b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T21n1409_001:0924b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1409_001:0924b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1409_001:0924b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在波囉鉢多國星左大城虞彌曩精舍。",
        "from": "T21n1409_001:0924b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過是夏已至九月二十日。",
        "from": "T21n1409_001:0924b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一苾芻名嚩野佉曩。",
        "from": "T21n1409_001:0924b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼苾芻出星左大城。",
        "from": "T21n1409_001:0924b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往支那城相去四由旬。",
        "from": "T21n1409_001:0924b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其路中見一大人。",
        "from": "T21n1409_001:0924b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身長三丈面長四尺。",
        "from": "T21n1409_001:0924b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知是文殊師利菩薩即時禮足長跪合掌白菩薩言。",
        "from": "T21n1409_001:0924b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何現身而來至此。",
        "from": "T21n1409_001:0924b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有因緣。",
        "from": "T21n1409_001:0924b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩答言如是如是。",
        "from": "T21n1409_001:0924b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻此閻浮提內諸眾生等。",
        "from": "T21n1409_001:0924b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當有病苦。",
        "from": "T21n1409_001:0924b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿修羅迦樓羅等住須彌山王一面。",
        "from": "T21n1409_001:0924b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸天人互相交戰。",
        "from": "T21n1409_001:0924b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故虛空中日月無光星辰不現。",
        "from": "T21n1409_001:0924b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人敗已修羅獲勝。",
        "from": "T21n1409_001:0924b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸鬼神因斯得便。",
        "from": "T21n1409_001:0924b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化女人形惱亂眾生生諸疾病。",
        "from": "T21n1409_001:0924b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或頭痛腹痛眼耳鼻痛。",
        "from": "T21n1409_001:0924b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生癰癤瘰癧痔漏疥癩瘡癬。",
        "from": "T21n1409_001:0924b28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復瘧病。",
        "from": "T21n1409_001:0924b29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其瘧發時或隔一日二日三日四日。",
        "from": "T21n1409_001:0924b29_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至風癀痰癊一切惡病。",
        "from": "T21n1409_001:0924c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又閻浮提內降大風雨。",
        "from": "T21n1409_001:0924c02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或寒或熱或澇或旱。",
        "from": "T21n1409_001:0924c02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀不豐人民飢儉悉皆中夭。",
        "from": "T21n1409_001:0924c03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復現虎狼師子藐拏等獸。",
        "from": "T21n1409_001:0924c03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侵損有情奪人精氣。",
        "from": "T21n1409_001:0924c04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾難競來逼惱。",
        "from": "T21n1409_001:0924c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大人說是事已告苾芻言。",
        "from": "T21n1409_001:0924c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有聖最勝陀羅尼。",
        "from": "T21n1409_001:0924c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長善根能除諸惡。",
        "from": "T21n1409_001:0924c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人發清淨心。",
        "from": "T21n1409_001:0924c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香華等供養三寶及諸賢聖。",
        "from": "T21n1409_001:0924c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七晝夜潔淨齋戒誦此陀羅尼是諸眾難即得消除。",
        "from": "T21n1409_001:0924c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T21n1409_001:0924c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆誐嚩覩尾摩攞沒地儼鼻囉誐。",
        "from": "T21n1409_001:0924c11_0",
        "context_with_next_sentence": true
    },
