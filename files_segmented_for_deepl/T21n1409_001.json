        "from": "T21n1409_001:0924c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此聖最勝陀羅尼已告苾芻言。",
        "from": "T21n1409_001:0925b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等依此正法儀則。",
        "from": "T21n1409_001:0925b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日志誠發清淨心。",
        "from": "T21n1409_001:0925b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供七比丘供養三寶及諸賢聖。",
        "from": "T21n1409_001:0925b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於初夜分作護摩然火。",
        "from": "T21n1409_001:0925b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除災患速得消散。",
        "from": "T21n1409_001:0925b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1409_001:0925b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此正法受持讀誦廣為人說。",
        "from": "T21n1409_001:0925b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸病皆得除愈。",
        "from": "T21n1409_001:0925b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次文殊師利菩薩告苾芻言。",
        "from": "T21n1409_001:0925b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1409_001:0925b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此聖最勝陀羅尼。",
        "from": "T21n1409_001:0925b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大明力廣利眾生。",
        "from": "T21n1409_001:0925b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提所有國界城邑聚落處處流轉。",
        "from": "T21n1409_001:0925b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生聽聞受持。",
        "from": "T21n1409_001:0925b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T21n1409_001:0925b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於此經讀誦一遍。",
        "from": "T21n1409_001:0925b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身病苦速得除愈。",
        "from": "T21n1409_001:0925b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀兩遍。",
        "from": "T21n1409_001:0925b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻子男女所有病苦悉得除愈。",
        "from": "T21n1409_001:0925b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀三遍。",
        "from": "T21n1409_001:0925b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眷屬所有病苦悉得除愈。",
        "from": "T21n1409_001:0925b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀四遍。",
        "from": "T21n1409_001:0925b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一國人民所有病苦悉得除愈。",
        "from": "T21n1409_001:0925b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若讀五遍。",
        "from": "T21n1409_001:0925b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王之封境諸小國土一切人民。",
        "from": "T21n1409_001:0925b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆獲安樂無諸疾病。",
        "from": "T21n1409_001:0925b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次文殊師利菩薩言。",
        "from": "T21n1409_001:0925b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此正法利益廣大甚為希有。",
        "from": "T21n1409_001:0925b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速為流傳令諸有情獲上功德。",
        "from": "T21n1409_001:0925b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於此經心生輕慢。",
        "from": "T21n1409_001:0925b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為受持讀誦。",
        "from": "T21n1409_001:0925b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為人演說流傳。",
        "from": "T21n1409_001:0925b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國界之內一切眾生。",
        "from": "T21n1409_001:0925b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不得聽聞者。",
        "from": "T21n1409_001:0925b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人獲過如五逆罪。",
        "from": "T21n1409_001:0925b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故苾芻於聖最勝陀羅尼。",
        "from": "T21n1409_001:0925b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信敬受持無令忘失。",
        "from": "T21n1409_001:0925b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼須彌山王一面住者。",
        "from": "T21n1409_001:0925b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天及阿修羅乾闥婆等。",
        "from": "T21n1409_001:0925b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我自調伏使閻浮提眾生獲大安樂。",
        "from": "T21n1409_001:0925b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時文殊師利說是法已忽然不現。",
        "from": "T21n1409_001:0925b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩野佉曩苾芻聞其所說。",
        "from": "T21n1409_001:0925b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心大歡喜信受奉行。",
        "from": "T21n1409_001:0925b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說聖最勝陀羅尼經",
        "from": "T21n1409_001:0925b27_0",
        "context_with_next_sentence": false
    }
]