[
    {
        "source_sentence": "佛說觀自在菩薩母陀羅尼經",
        "from": "T20n1117_001:0506a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T20n1117_001:0506a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T20n1117_001:0506a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1117_001:0506a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在廣嚴城。",
        "from": "T20n1117_001:0506a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾舍利子等五百人俱。",
        "from": "T20n1117_001:0506a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有慈氏等大菩薩眾。",
        "from": "T20n1117_001:0506a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬圍繞敷座而坐。",
        "from": "T20n1117_001:0506a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中有一菩薩名曰普賢。",
        "from": "T20n1117_001:0506a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起詣世尊前。",
        "from": "T20n1117_001:0506b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T20n1117_001:0506b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛白言世尊。",
        "from": "T20n1117_001:0506b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有觀自在菩薩母陀羅尼大明章句。",
        "from": "T20n1117_001:0506b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去現在未來諸佛世尊隨喜宣說。",
        "from": "T20n1117_001:0506b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛世尊為菩薩時。",
        "from": "T20n1117_001:0506b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求正等正覺利益眾生故。",
        "from": "T20n1117_001:0506b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦曾宣說此陀羅尼。",
        "from": "T20n1117_001:0506b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復此陀羅尼。",
        "from": "T20n1117_001:0506b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與求菩薩善男子善女人為父為母。",
        "from": "T20n1117_001:0506b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如孤獨而得依怙。",
        "from": "T20n1117_001:0506b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無主宰者當得主宰。",
        "from": "T20n1117_001:0506b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼陀羅尼若人讀誦得已受持者。",
        "from": "T20n1117_001:0506b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪業悉得消滅。",
        "from": "T20n1117_001:0506b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切行願皆得圓滿。",
        "from": "T20n1117_001:0506b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至修諸大明亦獲成就。",
        "from": "T20n1117_001:0506b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告普賢菩薩言。",
        "from": "T20n1117_001:0506b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠如汝說。",
        "from": "T20n1117_001:0506b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念往昔。",
        "from": "T20n1117_001:0506b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為菩薩時。",
        "from": "T20n1117_001:0506b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求正等正覺。",
        "from": "T20n1117_001:0506b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度如誐鵝沙數無量無邊世界。",
        "from": "T20n1117_001:0506b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有佛土名蘇珂嚩帝。",
        "from": "T20n1117_001:0506b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼土有佛號無量壽如來應供正等正覺。",
        "from": "T20n1117_001:0506b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是無量壽佛於今現在。",
        "from": "T20n1117_001:0506b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常說妙法利益眾生。",
        "from": "T20n1117_001:0506b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於彼會為婆羅門名自在光。",
        "from": "T20n1117_001:0506b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我時已得證發光地。",
        "from": "T20n1117_001:0506b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼會中已曾宣說此觀自在菩薩母陀羅尼。",
        "from": "T20n1117_001:0506b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與百千那由他無量無邊眾生作大利益。",
        "from": "T20n1117_001:0506b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時在會中一切大眾。",
        "from": "T20n1117_001:0506b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是陀羅尼已。",
        "from": "T20n1117_001:0506b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有罪業者皆悉消滅。",
        "from": "T20n1117_001:0506b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得宿命智者獲宿命智。",
        "from": "T20n1117_001:0506b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復告普賢菩薩言。",
        "from": "T20n1117_001:0506b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝為利益當來末法五濁惡世。",
        "from": "T20n1117_001:0506b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千俱胝無量無邊。",
        "from": "T20n1117_001:0506b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造無間業罪惡眾生得罪消滅。",
        "from": "T20n1117_001:0506b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令孤獨者有依怙故。",
        "from": "T20n1117_001:0506b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲隨喜宣說觀自在菩薩母陀羅尼。",
        "from": "T20n1117_001:0506b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉汝可宣說。",
        "from": "T20n1117_001:0506b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩蒙佛許已。",
        "from": "T20n1117_001:0506b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說觀自在菩薩母陀羅尼曰。",
        "from": "T20n1117_001:0506b25_3",
        "context_with_next_sentence": true
    },
