        "from": "T20n1117_001:0506b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T20n1117_001:0506c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人至心受持。",
        "from": "T20n1117_001:0506c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪業悉皆消滅。",
        "from": "T20n1117_001:0506c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切怖畏時常得擁護。",
        "from": "T20n1117_001:0506c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人欲求見我及諸成就者。",
        "from": "T20n1117_001:0506c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加精進心不間斷。",
        "from": "T20n1117_001:0506c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三時專注持誦。",
        "from": "T20n1117_001:0506c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至滿七日我愍是人為現本身。",
        "from": "T20n1117_001:0506c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復行人如是專注。",
        "from": "T20n1117_001:0506c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不間斷默念一月。",
        "from": "T20n1117_001:0506c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得觀自在菩薩出現本身施所求願。",
        "from": "T20n1117_001:0506c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得見無量壽佛。",
        "from": "T20n1117_001:0506c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞增長證宿命智。",
        "from": "T20n1117_001:0506c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處不離佛法具大富貴。",
        "from": "T20n1117_001:0506c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至獲得不退轉地。",
        "from": "T20n1117_001:0506c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已。",
        "from": "T20n1117_001:0506c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩摩訶薩及諸菩薩聲聞等。",
        "from": "T20n1117_001:0506c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切會眾聞佛所說。",
        "from": "T20n1117_001:0506c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T20n1117_001:0506c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說觀自在菩薩母陀羅尼經",
        "from": "T20n1117_001:0506c28_0",
        "context_with_next_sentence": false
    }
]