[
    {
        "source_sentence": "始終心要注",
        "from": "X56n0938_001:0598a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪大師　湛然　述",
        "from": "X56n0938_001:0598a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉沙門　從義　注",
        "from": "X56n0938_001:0598a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在因名始。",
        "from": "X56n0938_001:0598a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至果為終。",
        "from": "X56n0938_001:0598a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果雖殊。",
        "from": "X56n0938_001:0598a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦德無別。",
        "from": "X56n0938_001:0598a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓頓上乘。",
        "from": "X56n0938_001:0598a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旨歸於此。",
        "from": "X56n0938_001:0598a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以荊溪立於心要。",
        "from": "X56n0938_001:0598a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫三諦者。",
        "from": "X56n0938_001:0598a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天然之性德也。",
        "from": "X56n0938_001:0598a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上句標指。",
        "from": "X56n0938_001:0598a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下句發歎。",
        "from": "X56n0938_001:0598a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天然者如天之然。",
        "from": "X56n0938_001:0598a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名自然。",
        "from": "X56n0938_001:0598a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X56n0938_001:0598a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此與外道所計何別。",
        "from": "X56n0938_001:0598a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "X56n0938_001:0598a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道所執已為三藏所破。",
        "from": "X56n0938_001:0598a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那忽謂同圓頓諦理。",
        "from": "X56n0938_001:0598a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次。",
        "from": "X56n0938_001:0598a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知若從破計。",
        "from": "X56n0938_001:0598a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須蕩自然。",
        "from": "X56n0938_001:0598a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破計雖爾。",
        "from": "X56n0938_001:0598a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理必自然。",
        "from": "X56n0938_001:0598a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則自行。",
        "from": "X56n0938_001:0598a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃遣執惰。",
        "from": "X56n0938_001:0598a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣無妨作斯說也。",
        "from": "X56n0938_001:0598a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於下文。",
        "from": "X56n0938_001:0598a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含生本具。",
        "from": "X56n0938_001:0598a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕藏不顯。",
        "from": "X56n0938_001:0598a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由三惑覆。",
        "from": "X56n0938_001:0598a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應準今料簡。",
        "from": "X56n0938_001:0598a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯示舉一例。",
        "from": "X56n0938_001:0598a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸無勞委述。",
        "from": "X56n0938_001:0598a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中諦者統一切法。",
        "from": "X56n0938_001:0598a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真諦者泯一切法。",
        "from": "X56n0938_001:0598a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗諦者立一切法。",
        "from": "X56n0938_001:0598a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別示解釋三諦相也。",
        "from": "X56n0938_001:0598a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中者。",
        "from": "X56n0938_001:0598a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不偏二邊也。",
        "from": "X56n0938_001:0598a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦者。",
        "from": "X56n0938_001:0598a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審而無虗也。",
        "from": "X56n0938_001:0598a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統者。",
        "from": "X56n0938_001:0598a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總也。",
        "from": "X56n0938_001:0598a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法者。",
        "from": "X56n0938_001:0598a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二邊之法也。",
        "from": "X56n0938_001:0598a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真者。",
        "from": "X56n0938_001:0598a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無偽妄也。",
        "from": "X56n0938_001:0598a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泯。",
        "from": "X56n0938_001:0598a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡泯也。",
        "from": "X56n0938_001:0598a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法者。",
        "from": "X56n0938_001:0598a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三千之法也。",
        "from": "X56n0938_001:0598a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗者。",
        "from": "X56n0938_001:0598a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世俗也。",
        "from": "X56n0938_001:0598a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立者。",
        "from": "X56n0938_001:0598b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立也。",
        "from": "X56n0938_001:0598b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法者。",
        "from": "X56n0938_001:0598b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百界之法也。",
        "from": "X56n0938_001:0598b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此約。",
        "from": "X56n0938_001:0598b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三諦別明。",
        "from": "X56n0938_001:0598b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若從通說。",
        "from": "X56n0938_001:0598b02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應云一中一切中。",
        "from": "X56n0938_001:0598b02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無真無俗而不中。",
        "from": "X56n0938_001:0598b02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則三諦皆統理而絕待也。",
        "from": "X56n0938_001:0598b03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一真一切真。",
        "from": "X56n0938_001:0598b03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無中無俗而不真。",
        "from": "X56n0938_001:0598b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則三諦俱亡泯而無相也。",
        "from": "X56n0938_001:0598b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一俗一切俗。",
        "from": "X56n0938_001:0598b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無中無真而不俗。",
        "from": "X56n0938_001:0598b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則三諦並建立而宛然也。",
        "from": "X56n0938_001:0598b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉一即三。",
        "from": "X56n0938_001:0598b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非前後也。",
        "from": "X56n0938_001:0598b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含生本具。",
        "from": "X56n0938_001:0598b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非造作之所得也。",
        "from": "X56n0938_001:0598b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上兩句。",
        "from": "X56n0938_001:0598b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示三諦融即顯。",
        "from": "X56n0938_001:0598b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非縱橫之殊異也。",
        "from": "X56n0938_001:0598b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下二句。",
        "from": "X56n0938_001:0598b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明三諦本具。",
        "from": "X56n0938_001:0598b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彰無作之妙法也。",
        "from": "X56n0938_001:0598b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉一即三者。",
        "from": "X56n0938_001:0598b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉其中諦。",
        "from": "X56n0938_001:0598b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非真非俗當體泯法。",
        "from": "X56n0938_001:0598b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復名真諦。",
        "from": "X56n0938_001:0598b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常自建立。",
        "from": "X56n0938_001:0598b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又為俗諦。",
        "from": "X56n0938_001:0598b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中諦之一即三。",
        "from": "X56n0938_001:0598b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既然真俗之二即三亦爾。",
        "from": "X56n0938_001:0598b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準諸祖誥。",
        "from": "X56n0938_001:0598b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應更云即三而一有可相離。",
        "from": "X56n0938_001:0598b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一而三不可相混。",
        "from": "X56n0938_001:0598b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非三非一。",
        "from": "X56n0938_001:0598b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三一宛然。",
        "from": "X56n0938_001:0598b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會之彌分。",
        "from": "X56n0938_001:0598b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "派之常合。",
        "from": "X56n0938_001:0598b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫之復高。",
        "from": "X56n0938_001:0598b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪之又廣。",
        "from": "X56n0938_001:0598b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明鏡等譬。",
        "from": "X56n0938_001:0598b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真好研詳。",
        "from": "X56n0938_001:0598b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿見三一。",
        "from": "X56n0938_001:0598b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相即之故。",
        "from": "X56n0938_001:0598b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便乃不許俗諦世法。",
        "from": "X56n0938_001:0598b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真諦亡泯。",
        "from": "X56n0938_001:0598b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中諦絕俗。",
        "from": "X56n0938_001:0598b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言洋洋豈可誣哉。",
        "from": "X56n0938_001:0598b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲夫祕藏不顯。",
        "from": "X56n0938_001:0598b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖三惑之所覆也。",
        "from": "X56n0938_001:0598b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三諦微妙。",
        "from": "X56n0938_001:0598b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生不了。",
        "from": "X56n0938_001:0598b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱之為祕。",
        "from": "X56n0938_001:0598b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界包用不可盡目之。",
        "from": "X56n0938_001:0598b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為藏性。",
        "from": "X56n0938_001:0598b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖微妙。",
        "from": "X56n0938_001:0598b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濁成本有。",
        "from": "X56n0938_001:0598b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如鏡天。",
        "from": "X56n0938_001:0598b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻若塵雲。",
        "from": "X56n0938_001:0598b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此總明。",
        "from": "X56n0938_001:0598b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次文別爾。",
        "from": "X56n0938_001:0598b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無明。",
        "from": "X56n0938_001:0598b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翳乎法性。",
        "from": "X56n0938_001:0598b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵沙障乎化導。",
        "from": "X56n0938_001:0598b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見思阻乎空寂。",
        "from": "X56n0938_001:0598b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明者。",
        "from": "X56n0938_001:0598b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不了法界。",
        "from": "X56n0938_001:0598b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所明也。",
        "from": "X56n0938_001:0598b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵沙者。",
        "from": "X56n0938_001:0598b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬無知之數多也。",
        "from": "X56n0938_001:0598b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見思者。",
        "from": "X56n0938_001:0598b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從解等立名也。",
        "from": "X56n0938_001:0598b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知三惑皆是性具。",
        "from": "X56n0938_001:0598b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同體為障。",
        "from": "X56n0938_001:0598b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難可了知。",
        "from": "X56n0938_001:0598b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文云翳障阻者。",
        "from": "X56n0938_001:0598b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異其文耳。",
        "from": "X56n0938_001:0598b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然茲三惑乃體上之虗妄也。",
        "from": "X56n0938_001:0598c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結指惑障都非真實空華之譬。",
        "from": "X56n0938_001:0598c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其在茲乎。",
        "from": "X56n0938_001:0598c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是大覺慈尊喟然歎曰。",
        "from": "X56n0938_001:0598c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺即妙覺。",
        "from": "X56n0938_001:0598c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喟然歎聲也。",
        "from": "X56n0938_001:0598c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如界內絕生佛之假名。",
        "from": "X56n0938_001:0598c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等慧中無自他之形相。",
        "from": "X56n0938_001:0598c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通指三諦以為真如及平等慧。",
        "from": "X56n0938_001:0598c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕名離相。",
        "from": "X56n0938_001:0598c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以眾生妄想。",
        "from": "X56n0938_001:0598c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自證得。",
        "from": "X56n0938_001:0598c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫之能返也。",
        "from": "X56n0938_001:0598c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是立乎三觀。",
        "from": "X56n0938_001:0598c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破乎三惑。",
        "from": "X56n0938_001:0598c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證乎三智。",
        "from": "X56n0938_001:0598c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成乎三德。",
        "from": "X56n0938_001:0598c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生在迷。",
        "from": "X56n0938_001:0598c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未能復性。",
        "from": "X56n0938_001:0598c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故須明惑觀等說。",
        "from": "X56n0938_001:0598c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全性起脩。",
        "from": "X56n0938_001:0598c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性無所移。",
        "from": "X56n0938_001:0598c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全脩在性。",
        "from": "X56n0938_001:0598c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脩常宛爾。",
        "from": "X56n0938_001:0598c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一家所立三諦。",
        "from": "X56n0938_001:0598c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文在瓔珞．仁王兩經。",
        "from": "X56n0938_001:0598c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三觀文出瓔珞經下卷。",
        "from": "X56n0938_001:0598c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三惑準大品大論而開。",
        "from": "X56n0938_001:0598c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三智具如大品三智品中。",
        "from": "X56n0938_001:0598c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三德備在大涅槃經。",
        "from": "X56n0938_001:0598c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空觀者。",
        "from": "X56n0938_001:0598c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破見思惑。",
        "from": "X56n0938_001:0598c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證一切智。",
        "from": "X56n0938_001:0598c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成般若德。",
        "from": "X56n0938_001:0598c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假觀者。",
        "from": "X56n0938_001:0598c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破塵沙惑。",
        "from": "X56n0938_001:0598c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證道種智。",
        "from": "X56n0938_001:0598c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成解脫德。",
        "from": "X56n0938_001:0598c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中觀者。",
        "from": "X56n0938_001:0598c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破無明惑。",
        "from": "X56n0938_001:0598c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證一切種智。",
        "from": "X56n0938_001:0598c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成法身德。",
        "from": "X56n0938_001:0598c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念無相謂之空。",
        "from": "X56n0938_001:0598c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無法不備謂之假。",
        "from": "X56n0938_001:0598c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不一不異謂之中。",
        "from": "X56n0938_001:0598c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知一切法空寂一相名一切智。",
        "from": "X56n0938_001:0598c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知十法界諸種差異為道種智。",
        "from": "X56n0938_001:0598c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知於二邊無非中道名一切種智。",
        "from": "X56n0938_001:0598c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照明為般若。",
        "from": "X56n0938_001:0598c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解縛名解脫。",
        "from": "X56n0938_001:0598c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨名法身。",
        "from": "X56n0938_001:0598c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆具常樂我淨。",
        "from": "X56n0938_001:0598c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之德。",
        "from": "X56n0938_001:0598c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然茲三惑．三觀．三智．三德。",
        "from": "X56n0938_001:0598c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非各別也。",
        "from": "X56n0938_001:0598c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非異時也。",
        "from": "X56n0938_001:0598c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天然之理。",
        "from": "X56n0938_001:0598c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具諸法故。",
        "from": "X56n0938_001:0598c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上文別示。",
        "from": "X56n0938_001:0598c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐謂縱橫。",
        "from": "X56n0938_001:0598c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故茲。",
        "from": "X56n0938_001:0598c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "融即顯。",
        "from": "X56n0938_001:0598c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非別異。",
        "from": "X56n0938_001:0598c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知。",
        "from": "X56n0938_001:0598c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三惑一念中破。",
        "from": "X56n0938_001:0599a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三觀一心中脩。",
        "from": "X56n0938_001:0599a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三智一念而證。",
        "from": "X56n0938_001:0599a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三德一心而成。",
        "from": "X56n0938_001:0599a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惑觀一如。",
        "from": "X56n0938_001:0599a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智德無別。",
        "from": "X56n0938_001:0599a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟非性具。",
        "from": "X56n0938_001:0599a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧免異殊。",
        "from": "X56n0938_001:0599a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山門教觀。",
        "from": "X56n0938_001:0599a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永異諸家。",
        "from": "X56n0938_001:0599a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超過眾說。",
        "from": "X56n0938_001:0599a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良在茲焉。",
        "from": "X56n0938_001:0599a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此三諦。",
        "from": "X56n0938_001:0599a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性之自爾。",
        "from": "X56n0938_001:0599a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重歎三諦非作所成。",
        "from": "X56n0938_001:0599a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷茲三諦。",
        "from": "X56n0938_001:0599a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉成三惑。",
        "from": "X56n0938_001:0599a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惑破藉乎三觀。",
        "from": "X56n0938_001:0599a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀成證乎三智。",
        "from": "X56n0938_001:0599a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智成成乎三德。",
        "from": "X56n0938_001:0599a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自迷之悟展轉相由。",
        "from": "X56n0938_001:0599a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文中五三。",
        "from": "X56n0938_001:0599a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秪是一三。",
        "from": "X56n0938_001:0599a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無前無後。",
        "from": "X56n0938_001:0599a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果理同。",
        "from": "X56n0938_001:0599a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從因至果。",
        "from": "X56n0938_001:0599a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非漸修也。",
        "from": "X56n0938_001:0599a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性德之行。",
        "from": "X56n0938_001:0599a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異乎歷別。",
        "from": "X56n0938_001:0599a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說之次第。",
        "from": "X56n0938_001:0599a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理非次第。",
        "from": "X56n0938_001:0599a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言不頓顯。",
        "from": "X56n0938_001:0599a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有前後。",
        "from": "X56n0938_001:0599a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若論其理。",
        "from": "X56n0938_001:0599a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實在剎那。",
        "from": "X56n0938_001:0599a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其理者。",
        "from": "X56n0938_001:0599a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何三千三諦。",
        "from": "X56n0938_001:0599a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大綱如此。",
        "from": "X56n0938_001:0599a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "網目可尋矣。",
        "from": "X56n0938_001:0599a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦德宏深。",
        "from": "X56n0938_001:0599a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰大綱。",
        "from": "X56n0938_001:0599a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法廣多。",
        "from": "X56n0938_001:0599a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號為網目。",
        "from": "X56n0938_001:0599a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴名法界。",
        "from": "X56n0938_001:0599a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方等為實相。",
        "from": "X56n0938_001:0599a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若稱佛母。",
        "from": "X56n0938_001:0599a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華號髻珠。",
        "from": "X56n0938_001:0599a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃名佛師。",
        "from": "X56n0938_001:0599a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三諦是一法。",
        "from": "X56n0938_001:0599a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說種種名。",
        "from": "X56n0938_001:0599a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍猛悟之而造論。",
        "from": "X56n0938_001:0599a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者得之以開拓。",
        "from": "X56n0938_001:0599a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪傳之為心要。",
        "from": "X56n0938_001:0599a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則十方大覺諸祖所傳莫不歸乎諦德祕藏。",
        "from": "X56n0938_001:0599a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像末惰澆。",
        "from": "X56n0938_001:0599a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心寡薄。",
        "from": "X56n0938_001:0599a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯法門不能宗重。",
        "from": "X56n0938_001:0599a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而更別求心要之術。",
        "from": "X56n0938_001:0599a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良由近代習大乘者雜濫故也。",
        "from": "X56n0938_001:0599a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始終心要注(終)",
        "from": "X56n0938_001:0599a24_0",
        "context_with_next_sentence": false
    }
]