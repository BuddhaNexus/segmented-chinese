[
    {
        "source_sentence": "佛說地藏菩薩經",
        "from": "T85n2909_001:1455b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時地藏菩薩住在南方瑠璃世界。",
        "from": "T85n2909_001:1455b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以淨天眼觀地獄之中受苦眾生。",
        "from": "T85n2909_001:1455b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵碓擣鐵磨磨鐵犁耕鐵鋸解。",
        "from": "T85n2909_001:1455b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑊湯湧沸猛火旦天。",
        "from": "T85n2909_001:1455b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢則吞熱鐵丸。",
        "from": "T85n2909_001:1455b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴飲銅汁。",
        "from": "T85n2909_001:1455b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸苦惱無有休息。",
        "from": "T85n2909_001:1455b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地藏菩薩不忍見之。",
        "from": "T85n2909_001:1455b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從南方來到地獄中。",
        "from": "T85n2909_001:1455b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與閻羅王共同一處別床而座。",
        "from": "T85n2909_001:1455b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四種因緣。",
        "from": "T85n2909_001:1455c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者恐閻羅王斷罪不憑。",
        "from": "T85n2909_001:1455c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者恐文案交錯。",
        "from": "T85n2909_001:1455c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者未合死。",
        "from": "T85n2909_001:1455c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者受罪了出地獄池邊。",
        "from": "T85n2909_001:1455c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T85n2909_001:1455c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造地藏菩薩像。",
        "from": "T85n2909_001:1455c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫地藏菩薩經。",
        "from": "T85n2909_001:1455c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及念地藏菩薩名。",
        "from": "T85n2909_001:1455c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人定得往生西方極樂世界。",
        "from": "T85n2909_001:1455c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛國至一佛國。",
        "from": "T85n2909_001:1455c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一天堂至一天堂。",
        "from": "T85n2909_001:1455c06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人造地藏菩薩像。",
        "from": "T85n2909_001:1455c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫地藏菩薩經。",
        "from": "T85n2909_001:1455c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及念地藏菩薩名。",
        "from": "T85n2909_001:1455c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人定得往生西方極樂世界。",
        "from": "T85n2909_001:1455c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人捨命之日。",
        "from": "T85n2909_001:1455c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地藏菩薩親自來迎。",
        "from": "T85n2909_001:1455c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得與地藏菩薩共同一處。",
        "from": "T85n2909_001:1455c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T85n2909_001:1455c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說地藏菩薩經一卷",
        "from": "T85n2909_001:1455c12_0",
        "context_with_next_sentence": false
    }
]