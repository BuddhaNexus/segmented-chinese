[
    {
        "source_sentence": "略明般若末後一頌讚述",
        "from": "T40n1817_001:0783a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師義淨述",
        "from": "T40n1817_001:0783a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義淨因譯無著菩薩般若頌釋訖。",
        "from": "T40n1817_001:0783a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詳夫大士判其九喻。",
        "from": "T40n1817_001:0783a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂文致幽深。",
        "from": "T40n1817_001:0783a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理義玄簡。",
        "from": "T40n1817_001:0783a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非地隣極喜。",
        "from": "T40n1817_001:0783a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰能發此明慧。",
        "from": "T40n1817_001:0783a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而西域相承云。",
        "from": "T40n1817_001:0783a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無著菩薩昔於覩史多天慈氏尊處。",
        "from": "T40n1817_001:0783a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親受此八十頌。",
        "from": "T40n1817_001:0783a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開般若要門。",
        "from": "T40n1817_001:0783a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順瑜伽宗理。",
        "from": "T40n1817_001:0783a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明唯識之義。",
        "from": "T40n1817_001:0783a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂令教流印度。",
        "from": "T40n1817_001:0783a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若金烏之焰赫扶桑。",
        "from": "T40n1817_001:0783a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義闡神州。",
        "from": "T40n1817_001:0783a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等玉兔之光浮雪嶺。",
        "from": "T40n1817_001:0783a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而能斷金剛。",
        "from": "T40n1817_001:0783a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方乃有多釋。",
        "from": "T40n1817_001:0783a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "考其始也此頌最先。",
        "from": "T40n1817_001:0783a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即世親大士躬為其釋此。",
        "from": "T40n1817_001:0783a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖神州譯訖。",
        "from": "T40n1817_001:0783a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而義有闕如。",
        "from": "T40n1817_001:0783a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故復親覈談筵。",
        "from": "T40n1817_001:0783a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重詳其妙。",
        "from": "T40n1817_001:0783a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雅符釋意。",
        "from": "T40n1817_001:0783a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更譯本經。",
        "from": "T40n1817_001:0783a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世親菩薩復為般若七門義釋。",
        "from": "T40n1817_001:0783a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而那爛陀寺盛傳其論。",
        "from": "T40n1817_001:0783a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為義府幽冲尋者莫測。",
        "from": "T40n1817_001:0783a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有師子月法師造此論釋。",
        "from": "T40n1817_001:0783a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有東印度多聞俗士其名月官。",
        "from": "T40n1817_001:0783a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍檢諸家亦為義釋。",
        "from": "T40n1817_001:0783a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯等莫不意符三性。",
        "from": "T40n1817_001:0783a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不同中觀矣。",
        "from": "T40n1817_001:0783a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有別釋。",
        "from": "T40n1817_001:0783a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而但順龍猛。",
        "from": "T40n1817_001:0783a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不會瑜伽。",
        "from": "T40n1817_001:0783a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽則真有俗無。",
        "from": "T40n1817_001:0783a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以三性為本。",
        "from": "T40n1817_001:0783a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中觀乃真無俗有。",
        "from": "T40n1817_001:0783a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寔二諦為先。",
        "from": "T40n1817_001:0783b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若大宗。",
        "from": "T40n1817_001:0783b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含斯兩意。",
        "from": "T40n1817_001:0783b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致使東夏則道分南北。",
        "from": "T40n1817_001:0783b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方乃義隔有空。",
        "from": "T40n1817_001:0783b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既識介綱。",
        "from": "T40n1817_001:0783b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理無和雜。",
        "from": "T40n1817_001:0783b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各准　聖旨誠難乖競。",
        "from": "T40n1817_001:0783b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而末後一頌云。",
        "from": "T40n1817_001:0783b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有為法如星瞖燈幻。",
        "from": "T40n1817_001:0783b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露泡夢電雲。",
        "from": "T40n1817_001:0783b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應作如是觀者。",
        "from": "T40n1817_001:0783b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而釋文既隱。",
        "from": "T40n1817_001:0783b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐尋者尚昧。",
        "from": "T40n1817_001:0783b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒因二九事喻。",
        "from": "T40n1817_001:0783b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊題十八之作。",
        "from": "T40n1817_001:0783b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冀使朝覽遂閑。",
        "from": "T40n1817_001:0783b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶罔銷神之滯。",
        "from": "T40n1817_001:0783b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜光親授。",
        "from": "T40n1817_001:0783b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長無按劍之惑。",
        "from": "T40n1817_001:0783b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而見等九事。",
        "from": "T40n1817_001:0783b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生死之區寰。",
        "from": "T40n1817_001:0783b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士了如星等。",
        "from": "T40n1817_001:0783b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故處而不著。",
        "from": "T40n1817_001:0783b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智不住生津。",
        "from": "T40n1817_001:0783b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嫓紅蓮之在瀲。",
        "from": "T40n1817_001:0783b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲不居圓寂。",
        "from": "T40n1817_001:0783b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若白玉之沈溺。",
        "from": "T40n1817_001:0783b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因答無住涅槃。",
        "from": "T40n1817_001:0783b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "申其九喻云爾。",
        "from": "T40n1817_001:0783b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論見　觀見如星長夜妄執。",
        "from": "T40n1817_001:0783b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見心長夜景　　妄執久冥舒",
        "from": "T40n1817_001:0783b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　三心纔已發　　兩分盡皆除",
        "from": "T40n1817_001:0783b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻星　以星喻見夜有明無。",
        "from": "T40n1817_001:0783b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　榆星通夜景　　柳色徹明舒",
        "from": "T40n1817_001:0783b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　千條光若發　　一旦盡皆除",
        "from": "T40n1817_001:0783b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論境　道境如瞖妄覩空花。",
        "from": "T40n1817_001:0783b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　境色無非障　　妄有見塵瑕",
        "from": "T40n1817_001:0783b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　但由真智力　　不復覩狂花",
        "from": "T40n1817_001:0783b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻瞖　以瞖喻境元無妄執。",
        "from": "T40n1817_001:0783b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　太虛本無障　　淨境性亡瑕",
        "from": "T40n1817_001:0783b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　但由瞖眼力　　遂使見空花",
        "from": "T40n1817_001:0783b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論識　言識如燈生生不絕。",
        "from": "T40n1817_001:0783b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見起起不已　　妄生生未極",
        "from": "T40n1817_001:0783b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　留滯死宮中　　良由依識力",
        "from": "T40n1817_001:0783b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻燈　以燈喻識焰焰無窮。",
        "from": "T40n1817_001:0783b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　發焰焰不已　　舒光光未極",
        "from": "T40n1817_001:0783b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　照灼炳宵中　　良為膏油力",
        "from": "T40n1817_001:0783b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論界　說界如幻藉業生而會盡。",
        "from": "T40n1817_001:0783c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　業功莊處巧　　由惑生眾相",
        "from": "T40n1817_001:0783c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所執定非真　　界體全虛妄",
        "from": "T40n1817_001:0783c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻幻　以幻喻界假匠起而終無。",
        "from": "T40n1817_001:0783c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　幻師方便巧　　假作眾形相",
        "from": "T40n1817_001:0783c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　鞠體固非真　　所見皆虛妄",
        "from": "T40n1817_001:0783c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論身　序身如露體不久停。",
        "from": "T40n1817_001:0783c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　投軀生巘際　　寄命死河中",
        "from": "T40n1817_001:0783c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　鎮處飄颻夜　　還如橐籥風",
        "from": "T40n1817_001:0783c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻露　以露喻身逢風必落。",
        "from": "T40n1817_001:0783c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　圓珠停草際　　渧淚處華中",
        "from": "T40n1817_001:0783c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　悽悽動林夜　　索索盡隨風",
        "from": "T40n1817_001:0783c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論受用　陳用如泡待根境識。",
        "from": "T40n1817_001:0783c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寰中根色積　　託此復心行",
        "from": "T40n1817_001:0783c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寔由三觸合　　遂令三受生",
        "from": "T40n1817_001:0783c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻泡　以泡喻用假渧水風。",
        "from": "T40n1817_001:0783c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　池中平水積　　渧墜有風行",
        "from": "T40n1817_001:0783c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　但由三事合　　乘使萬泡生",
        "from": "T40n1817_001:0783c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論過　述過如夢由思而起。",
        "from": "T40n1817_001:0783c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　過去雖無境　　尋思意尚通",
        "from": "T40n1817_001:0783c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遂令方寸內　　還見九城容",
        "from": "T40n1817_001:0783c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻夢　以夢喻過因憶乃生。",
        "from": "T40n1817_001:0783c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　處晝多緣境　　良宵記念通",
        "from": "T40n1817_001:0783c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遂令於睡內　　重憶本時容",
        "from": "T40n1817_001:0783c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論現　談現如電暫時而有。",
        "from": "T40n1817_001:0783c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　萬像如電野　　四相等流光",
        "from": "T40n1817_001:0783c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　詎知唯一念　　妄計有三常",
        "from": "T40n1817_001:0783c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻電　以電喻現跾忽便亡。",
        "from": "T40n1817_001:0783c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　震雷鳴四野　　擊電動千光",
        "from": "T40n1817_001:0783c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　剎那存有念　　即體自無常",
        "from": "T40n1817_001:0784a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論未　論未如雲本識能持其種。",
        "from": "T40n1817_001:0784a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　藏識無初結　　波情浪後飛",
        "from": "T40n1817_001:0784a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　良由有貪愛　　帶種定何疑",
        "from": "T40n1817_001:0784a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻雲　以雲喻未自體必含於潤。",
        "from": "T40n1817_001:0784a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　靉靆屯雲結　　煥爛景風飛",
        "from": "T40n1817_001:0784a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　光華如可愛　　含潤理無疑",
        "from": "T40n1817_001:0784a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更以一句收事收喻撮其要義而為一述。",
        "from": "T40n1817_001:0784a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見心智滅如星殄　　惑境真亡若瞖除　想起由識如燈焰　　界有藉思同幻車　一身暫顯同朝露　　三受忽現等泡虛　憶念過時空夢發　　計執現存奔電舒　既知雨潤雲中住　　未種常依識藏居次下別據三性三身真俗般若。",
        "from": "T40n1817_001:0784a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以明觀行九喻解九事云。",
        "from": "T40n1817_001:0784a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　熟觀生界咸如此　　智者應可務真常　真常實不玄　　圓成在目前　覺二體空蛇索盡　　了一非無鏡月懸　鏡月懸時實無慮　　但作他緣生福處　唯識初心乍有依　　真如後念還無據　無據即般若　　勝俗亡真假　福津如筏捐不捐　　悲智隨生捨不捨略明般若末後一頌讚述",
        "from": "T40n1817_001:0784a16_0",
        "context_with_next_sentence": false
    }
]