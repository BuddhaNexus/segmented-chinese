[
    {
        "source_sentence": "馬鳴菩薩傳",
        "from": "T50n2046_001:0183a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後秦三藏鳩摩羅什譯",
        "from": "T50n2046_001:0183a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大師名馬鳴菩薩。",
        "from": "T50n2046_001:0183a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老脇弟子也。",
        "from": "T50n2046_001:0183a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時長老脇勤憂佛法入三昧觀。",
        "from": "T50n2046_001:0183a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰堪出家廣宣道化開悟眾生者。",
        "from": "T50n2046_001:0183a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見中天竺有出家外道。",
        "from": "T50n2046_001:0183a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世智聰辯善通論議。",
        "from": "T50n2046_001:0183a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱言若諸比丘。",
        "from": "T50n2046_001:0183a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與我論議者。",
        "from": "T50n2046_001:0183a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可打揵椎。",
        "from": "T50n2046_001:0183b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其不能。",
        "from": "T50n2046_001:0183b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不足公鳴揵椎受人供養。",
        "from": "T50n2046_001:0183b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時長老脇。",
        "from": "T50n2046_001:0183b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從北天竺欲至中國。",
        "from": "T50n2046_001:0183b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城名釋迦。",
        "from": "T50n2046_001:0183b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "路逢諸沙彌。",
        "from": "T50n2046_001:0183b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆共戲之。",
        "from": "T50n2046_001:0183b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大德長老與我富羅提。",
        "from": "T50n2046_001:0183b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即有持去者。",
        "from": "T50n2046_001:0183b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種嫐之輒不以理。",
        "from": "T50n2046_001:0183b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老脇顏無異容恬然不忤。",
        "from": "T50n2046_001:0183b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸沙彌中廣學問者。",
        "from": "T50n2046_001:0183b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺其遠大疑非常人。",
        "from": "T50n2046_001:0183b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試問其人觀察所為。",
        "from": "T50n2046_001:0183b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨問盡答而行不輟足。",
        "from": "T50n2046_001:0183b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意色深遠不存近細。",
        "from": "T50n2046_001:0183b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸沙彌具觀長老德量沖邃。",
        "from": "T50n2046_001:0183b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知不可測倍加恭敬。",
        "from": "T50n2046_001:0183b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸共侍送。",
        "from": "T50n2046_001:0183b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是長老脇。",
        "from": "T50n2046_001:0183b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以神力乘虛而逝到中天竺。",
        "from": "T50n2046_001:0183b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在一寺住問諸比丘。",
        "from": "T50n2046_001:0183b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不依法鳴揵椎耶。",
        "from": "T50n2046_001:0183b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘言。",
        "from": "T50n2046_001:0183b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老摩訶羅。",
        "from": "T50n2046_001:0183b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有以故不打也。",
        "from": "T50n2046_001:0183b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問言何故。",
        "from": "T50n2046_001:0183b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言。",
        "from": "T50n2046_001:0183b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有出家外道善能論議。",
        "from": "T50n2046_001:0183b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱令國中諸釋子沙門眾。",
        "from": "T50n2046_001:0183b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若其不能與我論議者。",
        "from": "T50n2046_001:0183b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得公鳴犍椎受人供養。",
        "from": "T50n2046_001:0183b14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以有此言是故不打。",
        "from": "T50n2046_001:0183b14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老脇言。",
        "from": "T50n2046_001:0183b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但鳴犍椎。",
        "from": "T50n2046_001:0183b15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設彼來者吾自對之。",
        "from": "T50n2046_001:0183b15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸舊比丘深奇其言。",
        "from": "T50n2046_001:0183b16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而疑不能辨。",
        "from": "T50n2046_001:0183b16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集共議言且鳴犍椎。",
        "from": "T50n2046_001:0183b17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道若來。",
        "from": "T50n2046_001:0183b17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令長老任其所為。",
        "from": "T50n2046_001:0183b17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即鳴犍椎。",
        "from": "T50n2046_001:0183b18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道即問。",
        "from": "T50n2046_001:0183b18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日何故打此木耶。",
        "from": "T50n2046_001:0183b18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言。",
        "from": "T50n2046_001:0183b19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方有長老沙門。",
        "from": "T50n2046_001:0183b19_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來鳴犍椎非我等也。",
        "from": "T50n2046_001:0183b19_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道言。",
        "from": "T50n2046_001:0183b20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可令其來。",
        "from": "T50n2046_001:0183b20_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即出相見。",
        "from": "T50n2046_001:0183b20_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道問言。",
        "from": "T50n2046_001:0183b20_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲論議耶。",
        "from": "T50n2046_001:0183b21_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言然。",
        "from": "T50n2046_001:0183b21_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道即形笑言。",
        "from": "T50n2046_001:0183b21_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此長老比丘形貌既爾。",
        "from": "T50n2046_001:0183b21_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言。",
        "from": "T50n2046_001:0183b22_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出常人。",
        "from": "T50n2046_001:0183b22_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何乃欲與吾論議。",
        "from": "T50n2046_001:0183b22_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即共要言。",
        "from": "T50n2046_001:0183b23_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却後七日。",
        "from": "T50n2046_001:0183b23_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當集國王大臣沙門外道。",
        "from": "T50n2046_001:0183b23_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大法師於此論也。",
        "from": "T50n2046_001:0183b24_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至六日夜長老脇。",
        "from": "T50n2046_001:0183b24_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入于三昧觀其所應。",
        "from": "T50n2046_001:0183b25_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日明旦大眾雲集。",
        "from": "T50n2046_001:0183b25_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老脇先至即昇高座。",
        "from": "T50n2046_001:0183b26_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏色怡懌倍於常日。",
        "from": "T50n2046_001:0183b26_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道後來當前而坐。",
        "from": "T50n2046_001:0183b27_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "占視沙門容貌和悅志意安泰。",
        "from": "T50n2046_001:0183b27_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復舉體備有論相。",
        "from": "T50n2046_001:0183b28_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便念言將無非是聖比丘耶。",
        "from": "T50n2046_001:0183b28_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志安且悅又備論相。",
        "from": "T50n2046_001:0183b29_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日將成佳論議也。",
        "from": "T50n2046_001:0183b29_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便共立要若墮負者當以何罪外道言若負者當斷其舌。",
        "from": "T50n2046_001:0183c01_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老脇言此不可也。",
        "from": "T50n2046_001:0183c02_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但作弟子足以允約。",
        "from": "T50n2046_001:0183c03_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言可爾。",
        "from": "T50n2046_001:0183c03_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又問誰應先語。",
        "from": "T50n2046_001:0183c03_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老脇言。",
        "from": "T50n2046_001:0183c04_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾既年邁故從遠來。",
        "from": "T50n2046_001:0183c04_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又先在此坐理應先語。",
        "from": "T50n2046_001:0183c04_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道言亦可爾耳。",
        "from": "T50n2046_001:0183c05_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現汝所說吾盡當破。",
        "from": "T50n2046_001:0183c05_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老脇即言。",
        "from": "T50n2046_001:0183c06_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令天下泰平大王長壽國土豐樂無諸災患。",
        "from": "T50n2046_001:0183c06_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道默然不知所言。",
        "from": "T50n2046_001:0183c07_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論法無對即墮負處。",
        "from": "T50n2046_001:0183c08_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏為弟子剃除鬚髮。",
        "from": "T50n2046_001:0183c08_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度為沙彌受具足戒。",
        "from": "T50n2046_001:0183c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨坐一處心自惟曰。",
        "from": "T50n2046_001:0183c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾才明遠識聲震天下。",
        "from": "T50n2046_001:0183c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何一言致屈便為人弟子。",
        "from": "T50n2046_001:0183c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念已不悅。",
        "from": "T50n2046_001:0183c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師知其心即命入房。",
        "from": "T50n2046_001:0183c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為現神足種種變化。",
        "from": "T50n2046_001:0183c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知師非恒心乃悅伏。",
        "from": "T50n2046_001:0183c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念曰吾為弟子固其宜矣。",
        "from": "T50n2046_001:0183c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師語言汝才明不易真未成耳。",
        "from": "T50n2046_001:0183c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設學吾所得法。",
        "from": "T50n2046_001:0183c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根力覺道辯才深達。",
        "from": "T50n2046_001:0183c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明審義趣者。",
        "from": "T50n2046_001:0183c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將天下無對也。",
        "from": "T50n2046_001:0183c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師還本國弟子住中天竺。",
        "from": "T50n2046_001:0183c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博通眾經明達內外。",
        "from": "T50n2046_001:0183c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "才辯蓋世四輩敬伏。",
        "from": "T50n2046_001:0183c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天竺國王甚珍遇之。",
        "from": "T50n2046_001:0183c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後北天竺小月氏國王。",
        "from": "T50n2046_001:0183c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伐於中國圍守經時。",
        "from": "T50n2046_001:0183c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中天竺王遣信問言。",
        "from": "T50n2046_001:0183c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有所求當相給與。",
        "from": "T50n2046_001:0183c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何足苦困人民久住此耶。",
        "from": "T50n2046_001:0183c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言汝意伏者送三億金當相赦耳。",
        "from": "T50n2046_001:0183c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言舉此一國無一億金。",
        "from": "T50n2046_001:0183c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何三億而可得耶。",
        "from": "T50n2046_001:0183c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言汝國內有二大寶。",
        "from": "T50n2046_001:0183c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一佛鉢二辯才比丘。",
        "from": "T50n2046_001:0183c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此與我足當二億金也。",
        "from": "T50n2046_001:0183c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言此二寶者吾甚重之不能捨也。",
        "from": "T50n2046_001:0183c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是比丘為王說法。",
        "from": "T50n2046_001:0183c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其辭曰。",
        "from": "T50n2046_001:0183c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫含情受化者天下莫二也。",
        "from": "T50n2046_001:0183c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道淵弘義存兼救。",
        "from": "T50n2046_001:0183c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大人之德亦以濟物為上。",
        "from": "T50n2046_001:0183c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世教多難故王化一國而已。",
        "from": "T50n2046_001:0183c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今弘宣佛道自可為四海法王也。",
        "from": "T50n2046_001:0183c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘度人義不容異功德在心理無遠近。",
        "from": "T50n2046_001:0183c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜存遠大何必在目前而已。",
        "from": "T50n2046_001:0183c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王素宗重敬用其言。",
        "from": "T50n2046_001:0183c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以與之月氏王便還本國。",
        "from": "T50n2046_001:0184a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸臣議曰王奉佛鉢固其宜矣。",
        "from": "T50n2046_001:0184a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫比丘者天下皆是當一億金。",
        "from": "T50n2046_001:0184a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無乃太過。",
        "from": "T50n2046_001:0184a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王審知比丘高明勝達。",
        "from": "T50n2046_001:0184a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導利弘深辯才說法乃感非人類。",
        "from": "T50n2046_001:0184a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將欲悟諸群惑。",
        "from": "T50n2046_001:0184a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓七匹馬至於六日旦。",
        "from": "T50n2046_001:0184a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普集內外沙門異學請比丘說法。",
        "from": "T50n2046_001:0184a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有聽者莫不開悟。",
        "from": "T50n2046_001:0184a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王繫此馬於眾會前以草與之(馬嗜浮流故以浮流草與之也)馬垂淚聽法無念食想。",
        "from": "T50n2046_001:0184a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是天下乃知非恒。",
        "from": "T50n2046_001:0184a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以馬解其音故。",
        "from": "T50n2046_001:0184a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂號為馬鳴菩薩。",
        "from": "T50n2046_001:0184a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於北天竺廣宣佛法。",
        "from": "T50n2046_001:0184a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導利群生善能方便。",
        "from": "T50n2046_001:0184a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成人功德四輩敬重。",
        "from": "T50n2046_001:0184a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復咸稱為功德日。",
        "from": "T50n2046_001:0184a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴菩薩傳",
        "from": "T50n2046_001:0184a12_0",
        "context_with_next_sentence": false
    }
]