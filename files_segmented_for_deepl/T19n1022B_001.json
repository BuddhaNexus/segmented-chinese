[
    {
        "source_sentence": "一切如來心祕密全身舍利寶篋",
        "from": "T19n1022B_001:0712b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印陀羅尼經",
        "from": "T19n1022B_001:0712b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進試鴻臚卿大興善寺三藏沙門",
        "from": "T19n1022B_001:0712b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智不空奉　詔譯",
        "from": "T19n1022B_001:0712b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T19n1022B_001:0712b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在摩伽陀國無垢園中寶光明池。",
        "from": "T19n1022B_001:0712b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩及大聲聞天龍藥叉犍闥婆訶蘇羅迦樓羅緊那羅摩睺羅伽人非人等無量百千。",
        "from": "T19n1022B_001:0712b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後圍遶。",
        "from": "T19n1022B_001:0712b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時眾中有一大婆羅門名無垢妙光多聞聰慧人所樂見。",
        "from": "T19n1022B_001:0712b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常行十善歸信三寶。",
        "from": "T19n1022B_001:0712b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善心殷重智慧微細。",
        "from": "T19n1022B_001:0712b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常恒欲令一切眾生。",
        "from": "T19n1022B_001:0712b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿善利大富豐饒。",
        "from": "T19n1022B_001:0712b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門無垢妙光從座而起。",
        "from": "T19n1022B_001:0712b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛所遶佛七匝。",
        "from": "T19n1022B_001:0712b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以眾香華奉獻世尊。",
        "from": "T19n1022B_001:0712b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無價妙衣瓔珞珠鬘持覆佛上。",
        "from": "T19n1022B_001:0712b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足却住一面作是請言。",
        "from": "T19n1022B_001:0712b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊與諸大眾。",
        "from": "T19n1022B_001:0712b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日晨朝至我宅中受我供養。",
        "from": "T19n1022B_001:0712b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊默然許之。",
        "from": "T19n1022B_001:0712b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門知佛受請。",
        "from": "T19n1022B_001:0712b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽還所住。",
        "from": "T19n1022B_001:0712b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於夜間廣辦餚膳百味飲食。",
        "from": "T19n1022B_001:0712b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑掃殿宇張施幡蓋。",
        "from": "T19n1022B_001:0712b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至明旦己與諸眷屬。",
        "from": "T19n1022B_001:0712b29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持眾香華及諸妓樂。",
        "from": "T19n1022B_001:0712b29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如來所白言時至。",
        "from": "T19n1022B_001:0712c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂降臨。",
        "from": "T19n1022B_001:0712c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊軟語。",
        "from": "T19n1022B_001:0712c01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安慰彼婆羅門無垢妙光。",
        "from": "T19n1022B_001:0712c02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍告大眾宣言。",
        "from": "T19n1022B_001:0712c02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等皆應往彼婆羅門家攝受供養。",
        "from": "T19n1022B_001:0712c03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲令彼獲大利故。",
        "from": "T19n1022B_001:0712c04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時世尊即從座起。",
        "from": "T19n1022B_001:0712c04_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔起座已。",
        "from": "T19n1022B_001:0712c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從佛身出種種光明。",
        "from": "T19n1022B_001:0712c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間錯妙色照觸十方。",
        "from": "T19n1022B_001:0712c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆警覺然後趣道。",
        "from": "T19n1022B_001:0712c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門以恭敬心持妙香華。",
        "from": "T19n1022B_001:0712c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眷屬及天龍八部釋梵四王。",
        "from": "T19n1022B_001:0712c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先行治道奉引如來。",
        "from": "T19n1022B_001:0712c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊前路不遠。",
        "from": "T19n1022B_001:0712c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中至一園名曰豐財。",
        "from": "T19n1022B_001:0712c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼園中有古朽塔摧壞崩倒荊棘掩庭蔓草封戶。",
        "from": "T19n1022B_001:0712c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓦礫埋隱狀若土堆。",
        "from": "T19n1022B_001:0712c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊逕往塔所。",
        "from": "T19n1022B_001:0712c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時塔上放大光明照耀熾盛。",
        "from": "T19n1022B_001:0712c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於土聚中出聲讚言。",
        "from": "T19n1022B_001:0712c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦牟尼。",
        "from": "T19n1022B_001:0712c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日所行極善境界。",
        "from": "T19n1022B_001:0712c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又婆羅門汝於今日獲大善利。",
        "from": "T19n1022B_001:0712c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊禮彼朽塔右繞三迊。",
        "from": "T19n1022B_001:0712c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫身上衣用覆其上。",
        "from": "T19n1022B_001:0712c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泫然垂淚涕血交流。",
        "from": "T19n1022B_001:0712c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泣已微笑。",
        "from": "T19n1022B_001:0712c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當爾之時十方諸佛。",
        "from": "T19n1022B_001:0712c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆同觀視亦皆流淚。",
        "from": "T19n1022B_001:0712c16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各所放光來照是塔。",
        "from": "T19n1022B_001:0712c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時大眾驚愕變色互欲決疑。",
        "from": "T19n1022B_001:0712c17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩等亦皆流淚。",
        "from": "T19n1022B_001:0712c18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威焰熾盛執杵旋轉。",
        "from": "T19n1022B_001:0712c19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛所白言世尊。",
        "from": "T19n1022B_001:0712c19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此何因緣現是光相。",
        "from": "T19n1022B_001:0712c20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何如來眼流淚如是。",
        "from": "T19n1022B_001:0712c20_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦彼十方諸佛大瑞光相現前。",
        "from": "T19n1022B_001:0712c21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來於此大眾解釋我疑。",
        "from": "T19n1022B_001:0712c21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時薄伽梵告金剛手。",
        "from": "T19n1022B_001:0712c22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大全身舍利積聚如來寶塔。",
        "from": "T19n1022B_001:0712c22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來無量俱胝心陀羅尼密印法要今在其中。",
        "from": "T19n1022B_001:0712c23_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手有此法要在是中故。",
        "from": "T19n1022B_001:0712c24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔即變為重疊無隙如胡麻子。",
        "from": "T19n1022B_001:0712c25_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱胝百千如來之身。",
        "from": "T19n1022B_001:0712c26_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知亦是如胡麻子。",
        "from": "T19n1022B_001:0712c26_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千俱胝如來全身舍利之聚。",
        "from": "T19n1022B_001:0712c27_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至八萬四千法蘊亦在其中。",
        "from": "T19n1022B_001:0712c27_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十九百千萬俱胝如來頂相亦在其中。",
        "from": "T19n1022B_001:0712c28_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是妙事是塔所在之處。",
        "from": "T19n1022B_001:0712c29_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大神驗殊勝威德。",
        "from": "T19n1022B_001:0713a01_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿一切世間吉慶。",
        "from": "T19n1022B_001:0713a01_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾聞佛是說。",
        "from": "T19n1022B_001:0713a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠塵離垢斷諸煩惱得法眼淨。",
        "from": "T19n1022B_001:0713a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時眾機異利益亦別須陀洹果斯陀含果阿那含果阿羅漢果辟支佛道。",
        "from": "T19n1022B_001:0713a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及菩薩道阿鞞跋致薩波若智。",
        "from": "T19n1022B_001:0713a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如是事各得其一。",
        "from": "T19n1022B_001:0713a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有證得初地二地乃至十地。",
        "from": "T19n1022B_001:0713a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有滿足六波羅蜜。",
        "from": "T19n1022B_001:0713a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其婆羅門遠塵離垢得五神通。",
        "from": "T19n1022B_001:0713a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛手見此奇特希有之事。",
        "from": "T19n1022B_001:0713a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白言世尊妙哉奇異。",
        "from": "T19n1022B_001:0713a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但聞此事尚獲如是殊勝功德況聞深理至心起信得幾功德。",
        "from": "T19n1022B_001:0713a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言諦聽汝金剛手。",
        "from": "T19n1022B_001:0713a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後世若有信男信女及復我等四部弟子。",
        "from": "T19n1022B_001:0713a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心書寫此一經典。",
        "from": "T19n1022B_001:0713a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即准書寫九十九百千萬俱胝如來所說一切經典。",
        "from": "T19n1022B_001:0713a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即過於彼九十九百千萬俱胝如來之前久植善根。",
        "from": "T19n1022B_001:0713a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即亦彼諸一切如來。",
        "from": "T19n1022B_001:0713a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持護念猶如愛眼。",
        "from": "T19n1022B_001:0713a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如慈母愛護幼子。",
        "from": "T19n1022B_001:0713a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人讀誦此一卷經。",
        "from": "T19n1022B_001:0713a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為讀誦過去現在未來諸佛所說經典。",
        "from": "T19n1022B_001:0713a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如是故。",
        "from": "T19n1022B_001:0713a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十九百千萬俱胝一切如來應正等覺。",
        "from": "T19n1022B_001:0713a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "側塞無隙猶如胡麻重疊赴來。",
        "from": "T19n1022B_001:0713a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜現身加持其人。",
        "from": "T19n1022B_001:0713a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切諸佛如來無數恒沙。",
        "from": "T19n1022B_001:0713a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前聚未去後群重來須臾推遷迴轉更赴。",
        "from": "T19n1022B_001:0713a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如細沙在水旋急。",
        "from": "T19n1022B_001:0713a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得停滯迴去復來。",
        "from": "T19n1022B_001:0713a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人以香華塗香華鬘衣服微妙嚴具供養此經。",
        "from": "T19n1022B_001:0713a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成於彼十方九十九百千萬俱胝如來之前。",
        "from": "T19n1022B_001:0713a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天香華衣服嚴具七寶所成。",
        "from": "T19n1022B_001:0713a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積如須彌盡以供養。",
        "from": "T19n1022B_001:0713a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種植善根亦復如是。",
        "from": "T19n1022B_001:0713a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天龍八部人非人等聞是說已。",
        "from": "T19n1022B_001:0713a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各懷希奇互相謂言。",
        "from": "T19n1022B_001:0713a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉威德是朽土聚。",
        "from": "T19n1022B_001:0713a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來神力所加持故有是神變。",
        "from": "T19n1022B_001:0713a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手復白佛言。",
        "from": "T19n1022B_001:0713a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何因緣故。",
        "from": "T19n1022B_001:0713a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是七寶塔現為土聚。",
        "from": "T19n1022B_001:0713a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022B_001:0713a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非土聚乃是殊妙大寶塔耳。",
        "from": "T19n1022B_001:0713b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由諸眾生業果劣故隱蔽不現。",
        "from": "T19n1022B_001:0713b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由塔隱故如來全身非可毀壞。",
        "from": "T19n1022B_001:0713b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有如來金剛藏身而可壞哉。",
        "from": "T19n1022B_001:0713b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若滅度後世末法逼迫之時。",
        "from": "T19n1022B_001:0713b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生習行非法應墮地獄。",
        "from": "T19n1022B_001:0713b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信三寶不植善根。",
        "from": "T19n1022B_001:0713b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣佛法當隱。",
        "from": "T19n1022B_001:0713b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然猶是塔堅固不滅。",
        "from": "T19n1022B_001:0713b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來神力所持。",
        "from": "T19n1022B_001:0713b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智眾生惑障覆蔽。",
        "from": "T19n1022B_001:0713b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徒朽珍寶不知採用。",
        "from": "T19n1022B_001:0713b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是事故我今流淚。",
        "from": "T19n1022B_001:0713b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來亦皆流淚。",
        "from": "T19n1022B_001:0713b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次佛告金剛手言。",
        "from": "T19n1022B_001:0713b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生書寫此經置塔中者。",
        "from": "T19n1022B_001:0713b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔即為一切如來金剛藏窣都婆。",
        "from": "T19n1022B_001:0713b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來陀羅尼心祕密加持窣都婆。",
        "from": "T19n1022B_001:0713b11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為九十九百千萬俱胝如來窣都婆。",
        "from": "T19n1022B_001:0713b12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來佛頂佛眼窣都婆。",
        "from": "T19n1022B_001:0713b13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為一切如來神力所護。",
        "from": "T19n1022B_001:0713b13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛像中窣都婆中安置此經。",
        "from": "T19n1022B_001:0713b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像即為七寶所成靈驗應心無願不滿。",
        "from": "T19n1022B_001:0713b15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其窣都婆傘蓋羅網輪橖露盤。",
        "from": "T19n1022B_001:0713b16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德字鈴鐸楹礎基階隨力所辦。",
        "from": "T19n1022B_001:0713b16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或土或木若石若甎。",
        "from": "T19n1022B_001:0713b17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由經威力自為七寶。",
        "from": "T19n1022B_001:0713b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來於此經典加其威力。",
        "from": "T19n1022B_001:0713b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誠實言不斷加持。",
        "from": "T19n1022B_001:0713b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情能於此塔。",
        "from": "T19n1022B_001:0713b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一香一華禮拜供養。",
        "from": "T19n1022B_001:0713b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十億劫生死重罪一時消滅。",
        "from": "T19n1022B_001:0713b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生免災殃死生佛家。",
        "from": "T19n1022B_001:0713b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有應墮阿鼻地獄。",
        "from": "T19n1022B_001:0713b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於此塔。",
        "from": "T19n1022B_001:0713b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一禮拜。",
        "from": "T19n1022B_001:0713b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一右遶。",
        "from": "T19n1022B_001:0713b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塞地獄門開菩提路。",
        "from": "T19n1022B_001:0713b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔及形像所在之處。",
        "from": "T19n1022B_001:0713b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來神力所護。",
        "from": "T19n1022B_001:0713b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處不為暴風雷電霹靂所害。",
        "from": "T19n1022B_001:0713b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為毒蛇蚖蝮毒蟲毒獸所傷。",
        "from": "T19n1022B_001:0713b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為師子狂象虎狼野干蜂蠆之所傷害。",
        "from": "T19n1022B_001:0713b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無藥叉羅剎部多那毘舍。",
        "from": "T19n1022B_001:0713b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮魑魅魍魎癲癎之怖。",
        "from": "T19n1022B_001:0713b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不為一切寒熱諸病。",
        "from": "T19n1022B_001:0713b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癧瘻癰疽瘡疣疥癩所染。",
        "from": "T19n1022B_001:0713b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人暫見是塔能除一切災難。",
        "from": "T19n1022B_001:0713b29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處亦無人馬六畜童子童女疫癘之患。",
        "from": "T19n1022B_001:0713b29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為橫死非命所夭。",
        "from": "T19n1022B_001:0713c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為刀杖水火所傷。",
        "from": "T19n1022B_001:0713c02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為盜賊怨讎所侵。",
        "from": "T19n1022B_001:0713c02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無飢饉貧乏之憂。",
        "from": "T19n1022B_001:0713c03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭魅呪咀不能得便。",
        "from": "T19n1022B_001:0713c03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王與諸眷屬晝夜衛護。",
        "from": "T19n1022B_001:0713c04_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八部大藥叉將。",
        "from": "T19n1022B_001:0713c04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月五星幢雲彗星晝夜護持。",
        "from": "T19n1022B_001:0713c05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切龍王加其精氣順時降雨。",
        "from": "T19n1022B_001:0713c05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天與忉利天。",
        "from": "T19n1022B_001:0713c06_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三時下來亦為供養。",
        "from": "T19n1022B_001:0713c07_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸仙三時來集。",
        "from": "T19n1022B_001:0713c07_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚詠旋遶禮謝瞻仰。",
        "from": "T19n1022B_001:0713c08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因與諸天女。",
        "from": "T19n1022B_001:0713c08_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜三時來下供養。",
        "from": "T19n1022B_001:0713c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處即為一切如來護念加持。",
        "from": "T19n1022B_001:0713c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由納經故塔即如是。",
        "from": "T19n1022B_001:0713c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人作塔以土石木金銀銅鉛。",
        "from": "T19n1022B_001:0713c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此神呪安置其中。",
        "from": "T19n1022B_001:0713c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔安置已。",
        "from": "T19n1022B_001:0713c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔即為七寶所成。",
        "from": "T19n1022B_001:0713c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下階級露盤傘蓋。",
        "from": "T19n1022B_001:0713c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈴鐸輪樘純為七寶。",
        "from": "T19n1022B_001:0713c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔四方如來形相。",
        "from": "T19n1022B_001:0713c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由法要故。",
        "from": "T19n1022B_001:0713c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來堅住護持晝夜不去。",
        "from": "T19n1022B_001:0713c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其七寶塔全身舍利之妙寶藏以呪威力擢竦。",
        "from": "T19n1022B_001:0713c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高至阿迦尼吒天宮之中。",
        "from": "T19n1022B_001:0713c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔所串峙一切諸天。",
        "from": "T19n1022B_001:0713c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜瞻仰守衛供養。",
        "from": "T19n1022B_001:0713c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言何因緣故。",
        "from": "T19n1022B_001:0713c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法如是殊勝功德。",
        "from": "T19n1022B_001:0713c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言當知以此寶篋印陀羅尼威神力故。",
        "from": "T19n1022B_001:0713c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T19n1022B_001:0713c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來哀愍我等。",
        "from": "T19n1022B_001:0713c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼。",
        "from": "T19n1022B_001:0713c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言諦聽思念莫忘。",
        "from": "T19n1022B_001:0713c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在未來一切如來分身光儀。",
        "from": "T19n1022B_001:0713c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸佛全身舍利。",
        "from": "T19n1022B_001:0713c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆在寶篋印陀羅尼。",
        "from": "T19n1022B_001:0713c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸如來所有三身亦在是中。",
        "from": "T19n1022B_001:0713c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說陀羅尼曰。",
        "from": "T19n1022B_001:0713c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫悉怛哩野(四合)地尾(二合)迦南(一)薩婆怛他蘖多喃(二)唵(三)部尾婆嚩娜嚩唎(四)嚩者梨(五)嚩者[齒*來](智皆反六)祖嚕祖嚕馱囉馱囉(七)薩嚩怛他蘖多(八)馱(引)覩馱梨鉢娜[牟*含](二合)婆嚩底(九)惹也嚩梨(十)畝怛梨(二合)薩磨(二合)囉(十一)怛他蘖多達磨斫迦囉(十二)鉢羅(二合)靺栗多(二合)娜嚩日羅(二合梨音)冐地滿拏(十三)楞迦囉(十四)楞訖哩(二合)諦(十五)薩嚩怛他(引)蘖多地瑟恥(二合)諦(十六)冐馱野冐馱野(十七)冐地冐地(十八)沒[亭*夜]沒[亭*夜](十九)參冐馱儞參冐馱野(二十)者攞者攞(二十一)者懶都(二十二)薩嚩嚩囉拏儞(二十三)薩嚩播波尾蘖諦(二十四)戶嚕戶嚕(二十五)薩嚩戍迦弭蘖帝(二十六)薩嚩怛他蘖多(二十七)紇哩(二合)娜野嚩日囉(二合)抳(二十八)三婆囉三婆囉(二十九)薩嚩怛他蘖多(三十)虞呬野(二合)馱囉抳畝涅梨(二合三十一)沒悌蘇沒悌(三十二)薩嚩怛他蘖多(引)地瑟恥(二合)多(三十三)馱覩蘖陛娑嚩(二合)賀(三十四)三摩耶(引)地瑟恥(二合)帝娑嚩(二合)訶(三十五)薩嚩怛他蘖多紇哩(二合)娜野馱覩畝捺犁(二合)娑嚩(二合)訶(三十六)蘇鉢羅(二合)底瑟恥(二合)多薩覩(二合)閉怛他蘖多地瑟恥(二合)帝戶嚕戶嚕吽吽娑嚩(二合)訶(三十七)唵薩嚩怛他蘖多(三十八)塢瑟抳(二合)沙馱覩畝捺囉(二合)尼薩嚩怛他蘖單娑馱覩尾部使多地瑟恥(二合)帝(三十九)吽吽娑嚩(二合)訶(引四十)爾時佛說是神呪已。",
        "from": "T19n1022B_001:0713c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來自土聚中出聲讚言。",
        "from": "T19n1022B_001:0714a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦世尊。",
        "from": "T19n1022B_001:0714a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出濁惡世為利無依無怙眾生。",
        "from": "T19n1022B_001:0714a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說深法。",
        "from": "T19n1022B_001:0714a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是法要久住世間。",
        "from": "T19n1022B_001:0714a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益廣多安穩快樂。",
        "from": "T19n1022B_001:0714a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時佛告金剛手言。",
        "from": "T19n1022B_001:0714a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽諦聽如是法要。",
        "from": "T19n1022B_001:0714a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力無窮利益無邊。",
        "from": "T19n1022B_001:0714a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如幢上如意寶珠。",
        "from": "T19n1022B_001:0714a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常雨珍寶滿一切願。",
        "from": "T19n1022B_001:0714a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今略說萬分之一。",
        "from": "T19n1022B_001:0714a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝宜憶持利益一切。",
        "from": "T19n1022B_001:0714a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有惡人死墮地獄。",
        "from": "T19n1022B_001:0714a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受苦無間免脫無期。",
        "from": "T19n1022B_001:0714a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有其子孫稱亡者名。",
        "from": "T19n1022B_001:0714a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦上神呪纔至七遍。",
        "from": "T19n1022B_001:0714a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洋銅熱鐵忽然變為八功德池。",
        "from": "T19n1022B_001:0714a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮生承足寶蓋駐頂。",
        "from": "T19n1022B_001:0714a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄門破菩提道開。",
        "from": "T19n1022B_001:0714a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其蓮如飛至極樂界。",
        "from": "T19n1022B_001:0714a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切種智自然顯發。",
        "from": "T19n1022B_001:0714a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂說無窮位在補處。",
        "from": "T19n1022B_001:0714b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有眾生重罪報故。",
        "from": "T19n1022B_001:0714b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百病集身苦痛逼心。",
        "from": "T19n1022B_001:0714b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此神呪二十一遍。",
        "from": "T19n1022B_001:0714b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百病萬惱一時消滅。",
        "from": "T19n1022B_001:0714b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命延長福德無盡。",
        "from": "T19n1022B_001:0714b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人慳貪業故生貧窮家。",
        "from": "T19n1022B_001:0714b04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣不隱身食不續命。",
        "from": "T19n1022B_001:0714b04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[(禾*尤)/里]瘦衰蔽人所惡賤。",
        "from": "T19n1022B_001:0714b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人慚愧入山折採無主搹華。",
        "from": "T19n1022B_001:0714b05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若磨朽木持以號香。",
        "from": "T19n1022B_001:0714b06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往至塔前禮拜供養。",
        "from": "T19n1022B_001:0714b06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋遶七匝流淚悔過。",
        "from": "T19n1022B_001:0714b07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由神呪力及塔威德。",
        "from": "T19n1022B_001:0714b07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅貧窮報富貴忽至。",
        "from": "T19n1022B_001:0714b08_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶如雨無所闕乏。",
        "from": "T19n1022B_001:0714b08_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但當此時彌飾佛法施與貧乏。",
        "from": "T19n1022B_001:0714b09_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有悋惜財寶忽滅。",
        "from": "T19n1022B_001:0714b09_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人為種善根隨分造塔。",
        "from": "T19n1022B_001:0714b10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或泥或甎隨力所辦。",
        "from": "T19n1022B_001:0714b11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大如菴羅高四指許。",
        "from": "T19n1022B_001:0714b11_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫神呪安置其中。",
        "from": "T19n1022B_001:0714b12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持以香華禮拜供養。",
        "from": "T19n1022B_001:0714b12_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其呪力及信心故。",
        "from": "T19n1022B_001:0714b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自小塔中出大香雲。",
        "from": "T19n1022B_001:0714b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香氣雲光周遍法界。",
        "from": "T19n1022B_001:0714b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薰馥晃曜廣作佛事。",
        "from": "T19n1022B_001:0714b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得功德如上所說。",
        "from": "T19n1022B_001:0714b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取要言之無願不滿。",
        "from": "T19n1022B_001:0714b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有末世四輩弟子善男善女。",
        "from": "T19n1022B_001:0714b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為無上道盡力造塔安置神呪。",
        "from": "T19n1022B_001:0714b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得功德說不可盡。",
        "from": "T19n1022B_001:0714b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人求福至其塔所。",
        "from": "T19n1022B_001:0714b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一華一香禮拜供養右旋行道。",
        "from": "T19n1022B_001:0714b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是功德官位榮耀不求自至。",
        "from": "T19n1022B_001:0714b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命富饒不祈自增。",
        "from": "T19n1022B_001:0714b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨家盜賊不討自敗。",
        "from": "T19n1022B_001:0714b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨念呪咀不厭歸本。",
        "from": "T19n1022B_001:0714b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疫癘邪氣不拔自避。",
        "from": "T19n1022B_001:0714b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善夫良婦不求自得。",
        "from": "T19n1022B_001:0714b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢男美女不禱自生。",
        "from": "T19n1022B_001:0714b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所願任意滿足。",
        "from": "T19n1022B_001:0714b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有烏雀鵄梟鳩鴿。",
        "from": "T19n1022B_001:0714b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鵂鶹狗狼野干蚊虻蟻螻之類。",
        "from": "T19n1022B_001:0714b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫來塔影及踏場草。",
        "from": "T19n1022B_001:0714b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧破惑障覺悟無明。",
        "from": "T19n1022B_001:0714b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽入佛家恣領法財。",
        "from": "T19n1022B_001:0714b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況有眾人或見塔形。",
        "from": "T19n1022B_001:0714b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或聞鐸聲或聞其名。",
        "from": "T19n1022B_001:0714b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或當其影罪障悉滅所求如意。",
        "from": "T19n1022B_001:0714b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世安穩後生極樂。",
        "from": "T19n1022B_001:0714b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或人隨力以一丸泥塗塔壞壁。",
        "from": "T19n1022B_001:0714b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運一拳石扶塔礩傾。",
        "from": "T19n1022B_001:0714b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此功德增福延壽。",
        "from": "T19n1022B_001:0714b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後成轉輪王。",
        "from": "T19n1022B_001:0714b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若我滅後四部弟子。",
        "from": "T19n1022B_001:0714b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是塔前濟苦界故。",
        "from": "T19n1022B_001:0714c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養香華至心發願誦念神呪。",
        "from": "T19n1022B_001:0714c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文文句句放大光明。",
        "from": "T19n1022B_001:0714c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照觸三途苦具皆辟。",
        "from": "T19n1022B_001:0714c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生脫苦佛種牙萌。",
        "from": "T19n1022B_001:0714c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意往生十方淨土。",
        "from": "T19n1022B_001:0714c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人往在高山峰上至心誦呪。",
        "from": "T19n1022B_001:0714c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼根所及。",
        "from": "T19n1022B_001:0714c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近世界。",
        "from": "T19n1022B_001:0714c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山谷林野江湖河海。",
        "from": "T19n1022B_001:0714c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中所有毛羽鱗甲一切生類。",
        "from": "T19n1022B_001:0714c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碎破惑障覺悟無明。",
        "from": "T19n1022B_001:0714c06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯現本有三種佛性。",
        "from": "T19n1022B_001:0714c07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟安處大涅槃中。",
        "from": "T19n1022B_001:0714c07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若與此人往過道路。",
        "from": "T19n1022B_001:0714c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或觸衣風或踏其跡。",
        "from": "T19n1022B_001:0714c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或唯見面或暫交語。",
        "from": "T19n1022B_001:0714c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等人重罪咸滅悉地圓滿。",
        "from": "T19n1022B_001:0714c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告金剛手言。",
        "from": "T19n1022B_001:0714c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此祕密神呪經典付囑汝等。",
        "from": "T19n1022B_001:0714c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊重護持流布世間。",
        "from": "T19n1022B_001:0714c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令眾生傳受斷絕。",
        "from": "T19n1022B_001:0714c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T19n1022B_001:0714c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今幸蒙世尊付囑。",
        "from": "T19n1022B_001:0714c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願我等為報世尊深重恩德。",
        "from": "T19n1022B_001:0714c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜護持流布宣揚一切世間。",
        "from": "T19n1022B_001:0714c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生書寫受持憶念不斷。",
        "from": "T19n1022B_001:0714c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等麾催釋梵四王龍神八部。",
        "from": "T19n1022B_001:0714c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜守護不暫捨離。",
        "from": "T19n1022B_001:0714c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉金剛手。",
        "from": "T19n1022B_001:0714c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝為未來世一切眾生大利益故。",
        "from": "T19n1022B_001:0714c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持此法令不斷絕。",
        "from": "T19n1022B_001:0714c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T19n1022B_001:0714c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此寶篋印陀羅尼廣作佛事。",
        "from": "T19n1022B_001:0714c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後往彼婆羅門家受諸供養。",
        "from": "T19n1022B_001:0714c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令時人天獲大福利却還所住。",
        "from": "T19n1022B_001:0714c19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾比丘比丘尼優婆塞優婆夷。",
        "from": "T19n1022B_001:0714c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍夜叉犍闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T19n1022B_001:0714c21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T19n1022B_001:0714c22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經與大明藏興函。",
        "from": "T19n1022B_001:0714c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌離部第八。",
        "from": "T19n1022B_001:0714c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空所譯寶篋印陀羅尼經同本。",
        "from": "T19n1022B_001:0714c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而其異不少也。",
        "from": "T19n1022B_001:0714c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此本者。",
        "from": "T19n1022B_001:0714c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照金剛及慈覺智證三師之請來。",
        "from": "T19n1022B_001:0714c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文義通暢也。",
        "from": "T19n1022B_001:0714c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先亮汰和上註此本行天下。",
        "from": "T19n1022B_001:0714c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今因刻諸軌。",
        "from": "T19n1022B_001:0714c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更標藏本之異於冠。",
        "from": "T19n1022B_001:0714c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上木。",
        "from": "T19n1022B_001:0714c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "享和改元辛酉仲秋月",
        "from": "T19n1022B_001:0714c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　豐山勤息　快道　誌享和癸亥三月二十八日一校加筆畢　　　　　　　　　　　　　　慈順",
        "from": "T19n1022B_001:0715a01_0",
        "context_with_next_sentence": false
    }
]