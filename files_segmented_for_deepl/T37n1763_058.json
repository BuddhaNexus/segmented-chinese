[
    {
        "source_sentence": "大般涅槃經集解卷第五十八",
        "from": "T37n1763_058:0561b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣出俱尸城緣起",
        "from": "T37n1763_058:0561b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣出俱尸城涅槃緣起",
        "from": "T37n1763_058:0561b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣出須達緣起　廣出逐外道緣起",
        "from": "T37n1763_058:0561b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼品之第五",
        "from": "T37n1763_058:0561b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼言世尊十六大國(至)拘尸那城入般涅槃。",
        "from": "T37n1763_058:0561b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生有待處漏盡。",
        "from": "T37n1763_058:0561b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下將辨處為道。",
        "from": "T37n1763_058:0561b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故發問也。",
        "from": "T37n1763_058:0561b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_058:0561b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修道之第四。",
        "from": "T37n1763_058:0561b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文人寄處。",
        "from": "T37n1763_058:0561b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以明道也。",
        "from": "T37n1763_058:0561b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大意有五因緣。",
        "from": "T37n1763_058:0561b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一為益人曠遠。",
        "from": "T37n1763_058:0561b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二欲報地往恩。",
        "from": "T37n1763_058:0561b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三為欲還此中正受。",
        "from": "T37n1763_058:0561b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四為果彼本願。",
        "from": "T37n1763_058:0561b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五為逐外道也。",
        "from": "T37n1763_058:0561b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子汝不應言拘尸那城(至)邊地弊惡隘陋小城。",
        "from": "T37n1763_058:0561b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先答不應謂此為隘陋也。",
        "from": "T37n1763_058:0561b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我念往昔過恒沙劫(至)我眷屬者受恩能報。",
        "from": "T37n1763_058:0561b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明此是初發心處。",
        "from": "T37n1763_058:0561b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故在此也。",
        "from": "T37n1763_058:0561b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_058:0561b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二報地恩也。",
        "from": "T37n1763_058:0561b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子往昔眾生(至)娑羅樹間三昧正受。",
        "from": "T37n1763_058:0561b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明此是往昔出家修道之處也。",
        "from": "T37n1763_058:0561b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_058:0561b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三欲還此中。",
        "from": "T37n1763_058:0561b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧正受故也。",
        "from": "T37n1763_058:0561b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我念往昔過無量劫(至)敷揚演說大涅槃經。",
        "from": "T37n1763_058:0561b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明此是發願之處也。",
        "from": "T37n1763_058:0561b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_058:0561b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四果本願也。",
        "from": "T37n1763_058:0561b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我初出家未得阿耨(至)我時默然已受彼請。",
        "from": "T37n1763_058:0561b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為洴沙王有請。",
        "from": "T37n1763_058:0561b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故所以來此也。",
        "from": "T37n1763_058:0561b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我初得阿耨多羅(至)我即往彼受王供養。",
        "from": "T37n1763_058:0561c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下皆為逐外道故。",
        "from": "T37n1763_058:0561c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第至此。",
        "from": "T37n1763_058:0561c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道於此。",
        "from": "T37n1763_058:0561c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必受化故。",
        "from": "T37n1763_058:0561c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故來此也。",
        "from": "T37n1763_058:0561c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_058:0561c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五為逐外道。",
        "from": "T37n1763_058:0561c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼先受此受故也。",
        "from": "T37n1763_058:0561c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道六師相與集聚(至)我時受已即住其中。",
        "from": "T37n1763_058:0561c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因出須達所起祇洹精舍事也。",
        "from": "T37n1763_058:0561c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時六師心生嫉妬悉共集詣波斯匿王。",
        "from": "T37n1763_058:0561c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下廣說外道之辭也。",
        "from": "T37n1763_058:0561c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言大王當知(至)六師之徒歡喜而出。",
        "from": "T37n1763_058:0561c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王知有益。",
        "from": "T37n1763_058:0561c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故許之。",
        "from": "T37n1763_058:0561c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時波斯匿王即勅嚴駕(至)阿耨多羅三藐三菩提心。",
        "from": "T37n1763_058:0561c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道雖復未降。",
        "from": "T37n1763_058:0561c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而所益已多也。",
        "from": "T37n1763_058:0561c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時六師各相謂言(至)阿耨多羅三藐三菩提心。",
        "from": "T37n1763_058:0561c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_058:0561c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_058:0561c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所至。",
        "from": "T37n1763_058:0561c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略已遍也。",
        "from": "T37n1763_058:0561c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第五十八",
        "from": "T37n1763_058:0561c17_0",
        "context_with_next_sentence": false
    }
]