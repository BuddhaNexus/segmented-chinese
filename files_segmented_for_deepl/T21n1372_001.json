[
    {
        "source_sentence": "增慧陀羅尼經",
        "from": "T21n1372_001:0889b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T21n1372_001:0889b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1372_001:0889b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1372_001:0889b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時大慧菩薩住須彌山頂。",
        "from": "T21n1372_001:0889b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸天子等來詣菩薩。",
        "from": "T21n1372_001:0889b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬圍繞而為聽法。",
        "from": "T21n1372_001:0889b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有菩薩名童子相。",
        "from": "T21n1372_001:0889b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白大慧菩薩。",
        "from": "T21n1372_001:0889b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲為我等故。",
        "from": "T21n1372_001:0889b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說增慧陀羅尼。",
        "from": "T21n1372_001:0889b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切少智鈍根愚昧眾生。",
        "from": "T21n1372_001:0889b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令使得聞增彼智慧。",
        "from": "T21n1372_001:0889b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時大慧菩薩即為宣說陀羅尼曰。",
        "from": "T21n1372_001:0889b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他唵(引)閉祖閉祖鉢囉(二合)倪也(二合)嚩哩馱(二合)儞惹囉惹囉彌馱(引)嚩哩馱(二合)儞地哩地哩沒弟嚩哩馱(二合)彌娑嚩(二合引)賀(引)爾時大慧菩薩。",
        "from": "T21n1372_001:0889b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼已。",
        "from": "T21n1372_001:0889c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告童子相言。",
        "from": "T21n1372_001:0889c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸眾生智慧鈍劣。",
        "from": "T21n1372_001:0889c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根性暗昧多所忘失。",
        "from": "T21n1372_001:0889c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發志誠心於此增慧陀羅尼。",
        "from": "T21n1372_001:0889c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦書寫供養。",
        "from": "T21n1372_001:0889c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人速得廣大智慧明記不忘。",
        "from": "T21n1372_001:0889c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人以此真言。",
        "from": "T21n1372_001:0889c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦七遍或二七遍。",
        "from": "T21n1372_001:0889c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持水三合於卯時飲。",
        "from": "T21n1372_001:0889c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日如是飲至七箇月或八箇月。",
        "from": "T21n1372_001:0889c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然日記千頌。",
        "from": "T21n1372_001:0889c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不恒飲水亦能日記五百頌。",
        "from": "T21n1372_001:0889c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧漸增根性明利。",
        "from": "T21n1372_001:0889c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時童子相菩薩。",
        "from": "T21n1372_001:0889c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸天人信受奉行。",
        "from": "T21n1372_001:0889c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增慧陀羅尼經",
        "from": "T21n1372_001:0889c13_0",
        "context_with_next_sentence": false
    }
]