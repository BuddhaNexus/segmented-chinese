[
    {
        "source_sentence": "居士傳二十八",
        "from": "X88n1646_028:0234a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張天覺傳",
        "from": "X88n1646_028:0234a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張天覺。",
        "from": "X88n1646_028:0234a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名商英。",
        "from": "X88n1646_028:0234a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號無盡居士。",
        "from": "X88n1646_028:0234a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜀州新津人也。",
        "from": "X88n1646_028:0234a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人負氣倜儻。",
        "from": "X88n1646_028:0234a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豪視一世。",
        "from": "X88n1646_028:0234a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初任通川簿。",
        "from": "X88n1646_028:0234a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞入寺。",
        "from": "X88n1646_028:0234a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見藏經卷策齊整。",
        "from": "X88n1646_028:0234a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怫然曰。",
        "from": "X88n1646_028:0234a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾孔聖之書乃不及此。",
        "from": "X88n1646_028:0234a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸而沉吟。",
        "from": "X88n1646_028:0234a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中夜不寐。",
        "from": "X88n1646_028:0234a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫人向氏問其故。",
        "from": "X88n1646_028:0234a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺曰。",
        "from": "X88n1646_028:0234a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適欲著無佛論耳。",
        "from": "X88n1646_028:0234a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向氏曰。",
        "from": "X88n1646_028:0234a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既已無佛。",
        "from": "X88n1646_028:0234a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何論之有。",
        "from": "X88n1646_028:0234a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺疑其言。",
        "from": "X88n1646_028:0234a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂止。",
        "from": "X88n1646_028:0234a08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於一同列所見維摩經。",
        "from": "X88n1646_028:0234a08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱至此病非地大亦不離地大。",
        "from": "X88n1646_028:0234a09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎曰。",
        "from": "X88n1646_028:0234a09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡人之言亦能爾耶。",
        "from": "X88n1646_028:0234a10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃借歸卒業。",
        "from": "X88n1646_028:0234a10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向氏見而謂曰。",
        "from": "X88n1646_028:0234a10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可熟讀此然後著無佛論。",
        "from": "X88n1646_028:0234a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺悚然。",
        "from": "X88n1646_028:0234a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂深信佛法。",
        "from": "X88n1646_028:0234a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神宗朝以王安石薦內召。",
        "from": "X88n1646_028:0234a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再遷至監察御史裏行。",
        "from": "X88n1646_028:0234a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋以事謫於外。",
        "from": "X88n1646_028:0234a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元祐中除河東提點刑獄。",
        "from": "X88n1646_028:0234a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至清凉山齋宿。",
        "from": "X88n1646_028:0234a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禱於文殊。",
        "from": "X88n1646_028:0234a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屢覩金燈光明如晝。",
        "from": "X88n1646_028:0234a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有化菩薩現於空中。",
        "from": "X88n1646_028:0234a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已乃塑文殊像供奉山寺。",
        "from": "X88n1646_028:0234a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著發願文云。",
        "from": "X88n1646_028:0234a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切處金色世界。",
        "from": "X88n1646_028:0234a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真智所以無方。",
        "from": "X88n1646_028:0234a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東北方清凉寶山。",
        "from": "X88n1646_028:0234a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻緣所以有在。",
        "from": "X88n1646_028:0234a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無方則一塵不立。",
        "from": "X88n1646_028:0234a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在則三界同瞻。",
        "from": "X88n1646_028:0234a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以五體歸依兩淚悲仰。",
        "from": "X88n1646_028:0234a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏念商英昔在普光殿內。",
        "from": "X88n1646_028:0234a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於大福城東。",
        "from": "X88n1646_028:0234a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念差殊。",
        "from": "X88n1646_028:0234a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四生流浪。",
        "from": "X88n1646_028:0234a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出沒於三千剎土。",
        "from": "X88n1646_028:0234a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纏綿於十二根塵。",
        "from": "X88n1646_028:0234a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以往善因。",
        "from": "X88n1646_028:0234a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "值今勝事。",
        "from": "X88n1646_028:0234a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷剎那之方便。",
        "from": "X88n1646_028:0234a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開無始之光明。",
        "from": "X88n1646_028:0234a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揣俗垢之已深。",
        "from": "X88n1646_028:0234a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐幔幢之猶在。",
        "from": "X88n1646_028:0234a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "托之土偶明此願輪。",
        "from": "X88n1646_028:0234a21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界空而我性亦空。",
        "from": "X88n1646_028:0234a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰真孰妄。",
        "from": "X88n1646_028:0234a22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方幻而我形亦幻。",
        "from": "X88n1646_028:0234a22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何異何同。",
        "from": "X88n1646_028:0234a23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願菩薩攝入悲宮。",
        "from": "X88n1646_028:0234a23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "接歸智殿。",
        "from": "X88n1646_028:0234a23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起信足於妙峯山頂。",
        "from": "X88n1646_028:0234a23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資辨河於阿耨池中。",
        "from": "X88n1646_028:0234a24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓終分段之身。",
        "from": "X88n1646_028:0234a24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更顯希奇之作。",
        "from": "X88n1646_028:0234b01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋以亢旱入山祈雨。",
        "from": "X88n1646_028:0234b01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三禱三應。",
        "from": "X88n1646_028:0234b01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以聞於朝。",
        "from": "X88n1646_028:0234b01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復還僧寺田三百頃。",
        "from": "X88n1646_028:0234b02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋為江西運使。",
        "from": "X88n1646_028:0234b02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁東林總禪師。",
        "from": "X88n1646_028:0234b02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總詰其所見與己合。",
        "from": "X88n1646_028:0234b03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂可之。",
        "from": "X88n1646_028:0234b03_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既按部分寧。",
        "from": "X88n1646_028:0234b03_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇兜率悅禪師謂曰。",
        "from": "X88n1646_028:0234b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞公善文章。",
        "from": "X88n1646_028:0234b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅曰。",
        "from": "X88n1646_028:0234b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從悅臨濟九世孫。",
        "from": "X88n1646_028:0234b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對運使論文章。",
        "from": "X88n1646_028:0234b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政如運使對從悅論禪也。",
        "from": "X88n1646_028:0234b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺不然其語。",
        "from": "X88n1646_028:0234b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但對悅稱賞東林。",
        "from": "X88n1646_028:0234b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅不肯。",
        "from": "X88n1646_028:0234b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語至更深。",
        "from": "X88n1646_028:0234b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅曰。",
        "from": "X88n1646_028:0234b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東林既印可運使。",
        "from": "X88n1646_028:0234b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運使於佛祖言教有少疑否。",
        "from": "X88n1646_028:0234b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰有疑香巖獨脚頭德山托鉢話。",
        "from": "X88n1646_028:0234b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅曰。",
        "from": "X88n1646_028:0234b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既於此有疑。",
        "from": "X88n1646_028:0234b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘安得無耶。",
        "from": "X88n1646_028:0234b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇如巖頭末後句是有耶是無耶。",
        "from": "X88n1646_028:0234b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰有。",
        "from": "X88n1646_028:0234b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅大笑便歸方丈閉却門。",
        "from": "X88n1646_028:0234b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺一夕睡不安。",
        "from": "X88n1646_028:0234b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至五更下牀。",
        "from": "X88n1646_028:0234b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觸翻溺器。",
        "from": "X88n1646_028:0234b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛省前語。",
        "from": "X88n1646_028:0234b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即往叩方丈門曰。",
        "from": "X88n1646_028:0234b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾已捉得賊也。",
        "from": "X88n1646_028:0234b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅曰贓在何處。",
        "from": "X88n1646_028:0234b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺無語。",
        "from": "X88n1646_028:0234b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅曰。",
        "from": "X88n1646_028:0234b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運使且去。",
        "from": "X88n1646_028:0234b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來日相見。",
        "from": "X88n1646_028:0234b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翼日呈頌曰。",
        "from": "X88n1646_028:0234b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皷寂鐘沉托鉢回。",
        "from": "X88n1646_028:0234b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巖頭一拶語如雷。",
        "from": "X88n1646_028:0234b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果然祇得三年活。",
        "from": "X88n1646_028:0234b14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫是遭他授記來。",
        "from": "X88n1646_028:0234b14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅乃謂曰。",
        "from": "X88n1646_028:0234b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參禪祇為命根不斷。",
        "from": "X88n1646_028:0234b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依語生解如是之說。",
        "from": "X88n1646_028:0234b15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公已深悟。",
        "from": "X88n1646_028:0234b15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然至極細微處不知不覺墮在區宇。",
        "from": "X88n1646_028:0234b15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃作頌曰。",
        "from": "X88n1646_028:0234b16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等閒行處步步皆如。",
        "from": "X88n1646_028:0234b16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖居聲色寧滯有無。",
        "from": "X88n1646_028:0234b17_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心靡異萬法非殊。",
        "from": "X88n1646_028:0234b17_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "休分體用莫擇精粗。",
        "from": "X88n1646_028:0234b18_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨機不礙應物無拘。",
        "from": "X88n1646_028:0234b18_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是非情盡凡聖皆除。",
        "from": "X88n1646_028:0234b18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰得誰失何親何踈。",
        "from": "X88n1646_028:0234b19_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈頭作尾指實為虗。",
        "from": "X88n1646_028:0234b19_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻身魔界轉脚邪塗。",
        "from": "X88n1646_028:0234b20_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了無逆順不犯工夫。",
        "from": "X88n1646_028:0234b20_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺遂邀悅至建昌。",
        "from": "X88n1646_028:0234b20_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "途中作十頌。",
        "from": "X88n1646_028:0234b21_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅亦作十頌酬之。",
        "from": "X88n1646_028:0234b21_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺故與元祐大臣不合。",
        "from": "X88n1646_028:0234b21_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹聖初為左司諫。",
        "from": "X88n1646_028:0234b22_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上書毀司馬光。",
        "from": "X88n1646_028:0234b22_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呂公著士論短之。",
        "from": "X88n1646_028:0234b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇寧中累遷至尚書左丞。",
        "from": "X88n1646_028:0234b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與蔡京議政不合。",
        "from": "X88n1646_028:0234b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數詆京。",
        "from": "X88n1646_028:0234b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罷知亳州。",
        "from": "X88n1646_028:0234b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋安置歸峽兩州。",
        "from": "X88n1646_028:0234b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兜率悅甞見石霜侍者清素得末後句以語天覺。",
        "from": "X88n1646_028:0234b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後天覺在峽告覺範洪禪師曰。",
        "from": "X88n1646_028:0234c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔見真淨於歸宗語及兜率末後句語未卒。",
        "from": "X88n1646_028:0234c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真淨忽怒罵曰。",
        "from": "X88n1646_028:0234c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此吐血禿丁脫空妄語。",
        "from": "X88n1646_028:0234c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用信惜。",
        "from": "X88n1646_028:0234c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真淨不知此也。",
        "from": "X88n1646_028:0234c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪曰。",
        "from": "X88n1646_028:0234c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公惟知兜率口授末後句。",
        "from": "X88n1646_028:0234c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至真淨老師真藥現前不能辨。",
        "from": "X88n1646_028:0234c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何也。",
        "from": "X88n1646_028:0234c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺於言下頓見真淨用處。",
        "from": "X88n1646_028:0234c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取家藏真淨像展拜。",
        "from": "X88n1646_028:0234c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題其上曰。",
        "from": "X88n1646_028:0234c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲菴綱宗。",
        "from": "X88n1646_028:0234c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能用能照。",
        "from": "X88n1646_028:0234c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冷面嚴眸。",
        "from": "X88n1646_028:0234c07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神光獨耀。",
        "from": "X88n1646_028:0234c07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰傳其旨。",
        "from": "X88n1646_028:0234c07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覿露惟肖。",
        "from": "X88n1646_028:0234c08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前悅後洪。",
        "from": "X88n1646_028:0234c08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如融如肇。",
        "from": "X88n1646_028:0234c08_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大觀四年京罷相。",
        "from": "X88n1646_028:0234c08_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起為資政殿學士。",
        "from": "X88n1646_028:0234c09_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃之除中書侍郎。",
        "from": "X88n1646_028:0234c09_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時中外共疾京所為。",
        "from": "X88n1646_028:0234c09_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見天覺能立異。",
        "from": "X88n1646_028:0234c10_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共稱為賢。",
        "from": "X88n1646_028:0234c10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徽宗從人望拜尚書左僕射。",
        "from": "X88n1646_028:0234c10_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時久旱彗星中天。",
        "from": "X88n1646_028:0234c11_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命下之日大雨。",
        "from": "X88n1646_028:0234c11_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彗沒不見。",
        "from": "X88n1646_028:0234c11_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徽宗喜。",
        "from": "X88n1646_028:0234c12_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書商霖二字以賜之。",
        "from": "X88n1646_028:0234c12_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大革弊政。",
        "from": "X88n1646_028:0234c12_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改京所鑄當十大錢為當三。",
        "from": "X88n1646_028:0234c12_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以平泉貨。",
        "from": "X88n1646_028:0234c13_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復轉般倉以罷直達。",
        "from": "X88n1646_028:0234c13_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行鹽鈔法以通商旅。",
        "from": "X88n1646_028:0234c13_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蠲橫斂以寬民力。",
        "from": "X88n1646_028:0234c14_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸上節華侈。",
        "from": "X88n1646_028:0234c14_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息土木。",
        "from": "X88n1646_028:0234c14_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抑僥倖。",
        "from": "X88n1646_028:0234c15_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徽宗甚嚴憚之。",
        "from": "X88n1646_028:0234c15_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞葺升平樓。",
        "from": "X88n1646_028:0234c15_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒主者遇張丞相導騎過。",
        "from": "X88n1646_028:0234c15_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匿匠樓下。",
        "from": "X88n1646_028:0234c16_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為相逾年。",
        "from": "X88n1646_028:0234c16_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為同列所忌。",
        "from": "X88n1646_028:0234c16_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諷言官文致其過。",
        "from": "X88n1646_028:0234c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出知河南府。",
        "from": "X88n1646_028:0234c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋安置衡州。",
        "from": "X88n1646_028:0234c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔡京復相。",
        "from": "X88n1646_028:0234c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太學諸生為之頌冤。",
        "from": "X88n1646_028:0234c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復故秩。",
        "from": "X88n1646_028:0234c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣和四年十一月晨臥於牀。",
        "from": "X88n1646_028:0234c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口占遺表。",
        "from": "X88n1646_028:0234c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命子弟書之。",
        "from": "X88n1646_028:0234c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈曰。",
        "from": "X88n1646_028:0234c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻質朝章八十一。",
        "from": "X88n1646_028:0234c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漚生漚滅誰久識。",
        "from": "X88n1646_028:0234c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撞破虗空歸去來。",
        "from": "X88n1646_028:0234c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵牛入海無消息。",
        "from": "X88n1646_028:0234c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄取枕撞門窓有聲如雷。",
        "from": "X88n1646_028:0234c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂卒。",
        "from": "X88n1646_028:0234c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡曰文忠(宗門武庫．羅湖野錄．宋史．清凉通傳．法喜志)。",
        "from": "X88n1646_028:0234c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_028:0234c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺早歲嗜祿躁進。",
        "from": "X88n1646_028:0234c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪正不明。",
        "from": "X88n1646_028:0234c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幾不有其躬危矣。",
        "from": "X88n1646_028:0234c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洎其晚節直道而行。",
        "from": "X88n1646_028:0234c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不撓於眾枉。",
        "from": "X88n1646_028:0234c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非所謂改過君子者耶。",
        "from": "X88n1646_028:0234c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其於心地法門知所致力矣。",
        "from": "X88n1646_028:0235a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1646_028:0235a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小智之流一入禪宗毫無畏忌。",
        "from": "X88n1646_028:0235a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撥置因果。",
        "from": "X88n1646_028:0235a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮無明坑。",
        "from": "X88n1646_028:0235a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知自奮者。",
        "from": "X88n1646_028:0235a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯又天覺之罪人哉。",
        "from": "X88n1646_028:0235a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_028:0235a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初祖入東土傳佛心印。",
        "from": "X88n1646_028:0235a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一口便已吸盡。",
        "from": "X88n1646_028:0235a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以下諸祖心心相印。",
        "from": "X88n1646_028:0235a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至曹溪而發洩無餘。",
        "from": "X88n1646_028:0235a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後來看得容易。",
        "from": "X88n1646_028:0235a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口口相傳。",
        "from": "X88n1646_028:0235a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依舊流為義學。",
        "from": "X88n1646_028:0235a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是南嶽青原而下諸祖深有懼焉。",
        "from": "X88n1646_028:0235a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再開方便之門。",
        "from": "X88n1646_028:0235a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曲盡錘爐之妙。",
        "from": "X88n1646_028:0235a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重重秘惜。",
        "from": "X88n1646_028:0235a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狠狠掃除。",
        "from": "X88n1646_028:0235a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用格外之提撕。",
        "from": "X88n1646_028:0235a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為當頭之棒喝。",
        "from": "X88n1646_028:0235a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語多奇特。",
        "from": "X88n1646_028:0235a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "話似風顛。",
        "from": "X88n1646_028:0235a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆不得已之苦心也。",
        "from": "X88n1646_028:0235a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善學者開宗明義。",
        "from": "X88n1646_028:0235a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於初祖及六祖機緣法語窮參力究。",
        "from": "X88n1646_028:0235a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須實見得心外無宗。",
        "from": "X88n1646_028:0235a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡外於心宗者即屬邪見。",
        "from": "X88n1646_028:0235a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任他見得漫天際地。",
        "from": "X88n1646_028:0235a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只是一團虗氣。",
        "from": "X88n1646_028:0235a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一點黑子耳。",
        "from": "X88n1646_028:0235a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此方見得分明諦當。",
        "from": "X88n1646_028:0235a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多生來疑情難斷。",
        "from": "X88n1646_028:0235a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊界難枯。",
        "from": "X88n1646_028:0235a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再開方便之門。",
        "from": "X88n1646_028:0235a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重起錘爐之力。",
        "from": "X88n1646_028:0235a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曹溪以下門門參究。",
        "from": "X88n1646_028:0235a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑情斷。",
        "from": "X88n1646_028:0235a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊界枯。",
        "from": "X88n1646_028:0235a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃為了當。",
        "from": "X88n1646_028:0235a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然總不出初祖及六祖機緣法語也。",
        "from": "X88n1646_028:0235a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此外若更有路可走。",
        "from": "X88n1646_028:0235a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即大妄語。",
        "from": "X88n1646_028:0235a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大波旬見。",
        "from": "X88n1646_028:0235a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去聖遙遠。",
        "from": "X88n1646_028:0235a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末學鮮有師承。",
        "from": "X88n1646_028:0235a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往往參尋者纔讀上大人。",
        "from": "X88n1646_028:0235a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便將奇特語新鮮話蘊在心中。",
        "from": "X88n1646_028:0235a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意欲超佛越祖。",
        "from": "X88n1646_028:0235a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下梢頭箇箇弄成下劣狂魔。",
        "from": "X88n1646_028:0235a19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛哉痛哉。",
        "from": "X88n1646_028:0235a19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳中多少奇特。",
        "from": "X88n1646_028:0235a20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縉閱之依舊疑著。",
        "from": "X88n1646_028:0235a20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸賴路頭素明。",
        "from": "X88n1646_028:0235a20_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑而不惑。",
        "from": "X88n1646_028:0235a21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已信得無別路可走耳○觸翻淨瓶。",
        "from": "X88n1646_028:0235a21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張天覺活埋了也。",
        "from": "X88n1646_028:0235a22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枕聲如雷。",
        "from": "X88n1646_028:0235a22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺末路出現。",
        "from": "X88n1646_028:0235a22_34",
        "context_with_next_sentence": false
    }
]