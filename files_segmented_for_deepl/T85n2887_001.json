[
    {
        "source_sentence": "佛說父母恩重經",
        "from": "T85n2887_001:1403b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T85n2887_001:1403b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在王舍城耆闍崛山中。",
        "from": "T85n2887_001:1403b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩摩訶薩及聲眷屬俱。",
        "from": "T85n2887_001:1403b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦與比丘比丘尼優婆塞優婆夷。",
        "from": "T85n2887_001:1403b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天人民及天龍鬼神。",
        "from": "T85n2887_001:1403b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來集會。",
        "from": "T85n2887_001:1403b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心聽佛說法。",
        "from": "T85n2887_001:1403b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻仰尊顏。",
        "from": "T85n2887_001:1403b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目不暫捨。",
        "from": "T85n2887_001:1403b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2887_001:1403b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人生在世。",
        "from": "T85n2887_001:1403b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母為親。",
        "from": "T85n2887_001:1403b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非父不生。",
        "from": "T85n2887_001:1403b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非母不育。",
        "from": "T85n2887_001:1403b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以寄託母胎懷身十月。",
        "from": "T85n2887_001:1403b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲滿月充。",
        "from": "T85n2887_001:1403b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母子俱顯生墮草上。",
        "from": "T85n2887_001:1403b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母養育。",
        "from": "T85n2887_001:1403b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臥則蘭車。",
        "from": "T85n2887_001:1403b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母懷抱。",
        "from": "T85n2887_001:1403c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和和弄聲。",
        "from": "T85n2887_001:1403c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含笑未語。",
        "from": "T85n2887_001:1403c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢時須食。",
        "from": "T85n2887_001:1403c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非母不哺。",
        "from": "T85n2887_001:1403c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴時須飲。",
        "from": "T85n2887_001:1403c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非母不乳。",
        "from": "T85n2887_001:1403c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母中飢時吞苦吐甘推乾就濕。",
        "from": "T85n2887_001:1403c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非義不親。",
        "from": "T85n2887_001:1403c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非母不養。",
        "from": "T85n2887_001:1403c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈母養兒。",
        "from": "T85n2887_001:1403c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去離蘭車。",
        "from": "T85n2887_001:1403c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十指甲中食子不淨。",
        "from": "T85n2887_001:1403c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應各有八斛四斗。",
        "from": "T85n2887_001:1403c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計論母恩。",
        "from": "T85n2887_001:1403c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昊天罔極。",
        "from": "T85n2887_001:1403c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼慈母云何可報。",
        "from": "T85n2887_001:1403c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難白佛言。",
        "from": "T85n2887_001:1403c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何可報其恩。",
        "from": "T85n2887_001:1403c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願說之。",
        "from": "T85n2887_001:1403c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T85n2887_001:1403c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諦聽善思念之。",
        "from": "T85n2887_001:1403c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當為汝分別解說。",
        "from": "T85n2887_001:1403c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母之恩昊天罔極。",
        "from": "T85n2887_001:1403c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何若有孝順慈孝之子。",
        "from": "T85n2887_001:1403c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為父母作福造經。",
        "from": "T85n2887_001:1403c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以七月十五日能造佛槃盂蘭盆。",
        "from": "T85n2887_001:1403c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻佛及僧得果無量。",
        "from": "T85n2887_001:1403c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能報父母之恩。",
        "from": "T85n2887_001:1403c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人。",
        "from": "T85n2887_001:1403c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫此經。",
        "from": "T85n2887_001:1403c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流布世人。",
        "from": "T85n2887_001:1403c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦。",
        "from": "T85n2887_001:1403c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此人報父母恩。",
        "from": "T85n2887_001:1403c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母云何可報。",
        "from": "T85n2887_001:1403c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但父母至於行來。",
        "from": "T85n2887_001:1403c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東西隣里井竈碓磨。",
        "from": "T85n2887_001:1403c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不時還家。",
        "from": "T85n2887_001:1403c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我兒家中啼哭。",
        "from": "T85n2887_001:1403c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶我即來還家。",
        "from": "T85n2887_001:1403c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其兒遙見我來。",
        "from": "T85n2887_001:1403c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在蘭車。",
        "from": "T85n2887_001:1403c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搖頭弄腦。",
        "from": "T85n2887_001:1403c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復曳腹隨行。",
        "from": "T85n2887_001:1403c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼向母。",
        "from": "T85n2887_001:1403c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母為其子曲身下就長。",
        "from": "T85n2887_001:1403c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒兩手拂拭塵土。",
        "from": "T85n2887_001:1403c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚和其口開懷出乳。",
        "from": "T85n2887_001:1403c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以乳與之。",
        "from": "T85n2887_001:1403c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母見兒歡。",
        "from": "T85n2887_001:1403c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒見母喜。",
        "from": "T85n2887_001:1403c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二情恩悲親愛。",
        "from": "T85n2887_001:1403c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈重莫復。",
        "from": "T85n2887_001:1403c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二歲三歲弄意始行。",
        "from": "T85n2887_001:1403c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其食時非母不知父。",
        "from": "T85n2887_001:1403c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母行來值他座席。",
        "from": "T85n2887_001:1403c21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或得餅肉。",
        "from": "T85n2887_001:1403c21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不噉輟味懷挾來歸。",
        "from": "T85n2887_001:1403c21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向其與子。",
        "from": "T85n2887_001:1403c22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十來九得恒常歡喜。",
        "from": "T85n2887_001:1403c22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一過不得憍啼佯哭。",
        "from": "T85n2887_001:1403c23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憍子不孝。",
        "from": "T85n2887_001:1403c23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有五樀。",
        "from": "T85n2887_001:1403c23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝子不懷。",
        "from": "T85n2887_001:1403c24_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有慈順。",
        "from": "T85n2887_001:1403c24_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂至長大。",
        "from": "T85n2887_001:1403c24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朋友相隨。",
        "from": "T85n2887_001:1403c24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梳頭摩髮。",
        "from": "T85n2887_001:1403c25_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得好衣。",
        "from": "T85n2887_001:1403c25_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆蓋身體。",
        "from": "T85n2887_001:1403c25_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弊衣破故。",
        "from": "T85n2887_001:1403c25_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母自著新好綿帛。",
        "from": "T85n2887_001:1403c26_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先與其子。",
        "from": "T85n2887_001:1403c26_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於行來。",
        "from": "T85n2887_001:1403c26_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官私急疾。",
        "from": "T85n2887_001:1403c27_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傾心南北。",
        "from": "T85n2887_001:1403c27_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐子東西。",
        "from": "T85n2887_001:1403c27_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫上其頭。",
        "from": "T85n2887_001:1403c27_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既索妻婦得他子女。",
        "from": "T85n2887_001:1403c28_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母轉疏。",
        "from": "T85n2887_001:1403c28_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "私房屋室共相語樂。",
        "from": "T85n2887_001:1403c28_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母年高氣力衰老。",
        "from": "T85n2887_001:1403c29_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終朝至暮不來借問。",
        "from": "T85n2887_001:1403c29_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惑復父孤母寡。",
        "from": "T85n2887_001:1404a01_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨守空房。",
        "from": "T85n2887_001:1404a01_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如客人。",
        "from": "T85n2887_001:1404a01_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄止他舍。",
        "from": "T85n2887_001:1404a02_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常無恩愛。",
        "from": "T85n2887_001:1404a02_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復無濡被寒。",
        "from": "T85n2887_001:1404a02_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦辛厄難遭之。",
        "from": "T85n2887_001:1404a02_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚年老色衰。",
        "from": "T85n2887_001:1404a03_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多饒蟣虱。",
        "from": "T85n2887_001:1404a03_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夙夜不臥。",
        "from": "T85n2887_001:1404a03_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長呼歎息。",
        "from": "T85n2887_001:1404a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何罪宿愆生此不孝之子。",
        "from": "T85n2887_001:1404a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時喚呼。",
        "from": "T85n2887_001:1404a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋目驚怒。",
        "from": "T85n2887_001:1404a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸兒罵詈。",
        "from": "T85n2887_001:1404a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "低頭含笑。",
        "from": "T85n2887_001:1404a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻復不孝子。",
        "from": "T85n2887_001:1404a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復五樀夫妻和合同作五逆。",
        "from": "T85n2887_001:1404a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時喚呼。",
        "from": "T85n2887_001:1404a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急疾取使。",
        "from": "T85n2887_001:1404a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十喚九違。",
        "from": "T85n2887_001:1404a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡不從順。",
        "from": "T85n2887_001:1404a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罵詈瞋恚。",
        "from": "T85n2887_001:1404a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如早死。",
        "from": "T85n2887_001:1404a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強在地上。",
        "from": "T85n2887_001:1404a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母聞之。",
        "from": "T85n2887_001:1404a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲哭懊惱。",
        "from": "T85n2887_001:1404a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流淚雙下。",
        "from": "T85n2887_001:1404a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啼哭目腫。",
        "from": "T85n2887_001:1404a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝初小時非吾不長。",
        "from": "T85n2887_001:1404a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但吾生汝。",
        "from": "T85n2887_001:1404a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如本無。",
        "from": "T85n2887_001:1404a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T85n2887_001:1404a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T85n2887_001:1404a10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為父母受持讀誦書寫父母恩重大乘摩訶般若波羅蜜經一句一偈。",
        "from": "T85n2887_001:1404a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一逕耳目者所有五逆重罪悉得消滅。",
        "from": "T85n2887_001:1404a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永盡無餘。",
        "from": "T85n2887_001:1404a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得見佛聞法。",
        "from": "T85n2887_001:1404a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速得解脫。",
        "from": "T85n2887_001:1404a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難從座而起。",
        "from": "T85n2887_001:1404a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩。",
        "from": "T85n2887_001:1404a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長跪合掌。",
        "from": "T85n2887_001:1404a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前白佛言。",
        "from": "T85n2887_001:1404a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此經云何名之。",
        "from": "T85n2887_001:1404a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何奉持。",
        "from": "T85n2887_001:1404a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T85n2887_001:1404a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經名父母恩重經。",
        "from": "T85n2887_001:1404a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有一切眾生。",
        "from": "T85n2887_001:1404a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為父母作福造經燒香請佛禮拜供養三寶。",
        "from": "T85n2887_001:1404a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或飲食眾僧。",
        "from": "T85n2887_001:1404a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人能報父母其恩。",
        "from": "T85n2887_001:1404a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋梵王諸天人民一切眾生聞經歡喜。",
        "from": "T85n2887_001:1404a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩薩心。",
        "from": "T85n2887_001:1404a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[口*睪]哭動地。",
        "from": "T85n2887_001:1404a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淚下如雨五體投地。",
        "from": "T85n2887_001:1404a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受頂禮佛足。",
        "from": "T85n2887_001:1404a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜奉行。",
        "from": "T85n2887_001:1404a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說父母恩重經",
        "from": "T85n2887_001:1404a23_0",
        "context_with_next_sentence": false
    }
]