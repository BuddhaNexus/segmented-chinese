[
    {
        "source_sentence": "佛祖綱目卷第八(荒字號)",
        "from": "X85n1594_008:0573b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(周惠王二十年起)庚午(襄王元年)癸卯(頃王元年)己酉(匡王元年)乙卯(定王元年)癸亥(周定王九年止)(甲申)六祖彌遮迦傳法婆須蜜彌遮迦。",
        "from": "X85n1594_008:0573b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中印度人。",
        "from": "X85n1594_008:0573b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得法於提多迦已。",
        "from": "X85n1594_008:0573b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊化至北天竺國。",
        "from": "X85n1594_008:0573b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見雉堞之上。",
        "from": "X85n1594_008:0573b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有金色祥雲。",
        "from": "X85n1594_008:0573b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆曰。",
        "from": "X85n1594_008:0573b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯道人氣也。",
        "from": "X85n1594_008:0573b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有大士。",
        "from": "X85n1594_008:0573b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為吾法嗣。",
        "from": "X85n1594_008:0573b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃入城。",
        "from": "X85n1594_008:0573b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於闤闠間。",
        "from": "X85n1594_008:0573b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一人手。",
        "from": "X85n1594_008:0573b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持酒器。",
        "from": "X85n1594_008:0573b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎而問曰。",
        "from": "X85n1594_008:0573c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師何方而來。",
        "from": "X85n1594_008:0573c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲往何所。",
        "from": "X85n1594_008:0573c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌遮迦曰。",
        "from": "X85n1594_008:0573c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心來。",
        "from": "X85n1594_008:0573c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲往無處。",
        "from": "X85n1594_008:0573c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼曰。",
        "from": "X85n1594_008:0573c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識我手中物否。",
        "from": "X85n1594_008:0573c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌遮迦曰。",
        "from": "X85n1594_008:0573c02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是觸器。",
        "from": "X85n1594_008:0573c02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而負淨者。",
        "from": "X85n1594_008:0573c03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼曰。",
        "from": "X85n1594_008:0573c03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師識我否。",
        "from": "X85n1594_008:0573c03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌遮迦曰。",
        "from": "X85n1594_008:0573c03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我即不識。",
        "from": "X85n1594_008:0573c03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識即非我。",
        "from": "X85n1594_008:0573c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復謂之曰。",
        "from": "X85n1594_008:0573c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝試自稱名氏。",
        "from": "X85n1594_008:0573c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當後示本因。",
        "from": "X85n1594_008:0573c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼說偈答曰。",
        "from": "X85n1594_008:0573c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從無量劫。",
        "from": "X85n1594_008:0573c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於生此國。",
        "from": "X85n1594_008:0573c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本姓頗羅墮。",
        "from": "X85n1594_008:0573c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名字婆須蜜。",
        "from": "X85n1594_008:0573c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌遮迦曰。",
        "from": "X85n1594_008:0573c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我師提多迦說。",
        "from": "X85n1594_008:0573c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊昔遊北印度。",
        "from": "X85n1594_008:0573c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語阿難言。",
        "from": "X85n1594_008:0573c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此國中。",
        "from": "X85n1594_008:0573c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾滅度後三百年。",
        "from": "X85n1594_008:0573c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一聖人。",
        "from": "X85n1594_008:0573c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓頗羅墮。",
        "from": "X85n1594_008:0573c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名婆須蜜。",
        "from": "X85n1594_008:0573c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於禪祖。",
        "from": "X85n1594_008:0573c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲第七。",
        "from": "X85n1594_008:0573c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊記汝。",
        "from": "X85n1594_008:0573c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝應出家。",
        "from": "X85n1594_008:0573c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼乃置器。",
        "from": "X85n1594_008:0573c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮側立。",
        "from": "X85n1594_008:0573c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而言曰。",
        "from": "X85n1594_008:0573c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我思往劫。",
        "from": "X85n1594_008:0573c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗作檀那。",
        "from": "X85n1594_008:0573c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻一如來寶座。",
        "from": "X85n1594_008:0573c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼佛記我曰。",
        "from": "X85n1594_008:0573c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於賢劫釋迦法中。",
        "from": "X85n1594_008:0573c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣傳至教。",
        "from": "X85n1594_008:0573c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今符師說。",
        "from": "X85n1594_008:0573c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願加度脫。",
        "from": "X85n1594_008:0573c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌遮迦即與披剃。",
        "from": "X85n1594_008:0573c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復圓戒相。",
        "from": "X85n1594_008:0573c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃告之曰。",
        "from": "X85n1594_008:0573c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法眼藏。",
        "from": "X85n1594_008:0573c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今付於汝。",
        "from": "X85n1594_008:0573c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令斷絕。",
        "from": "X85n1594_008:0573c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃說偈曰。",
        "from": "X85n1594_008:0573c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無心無可得。",
        "from": "X85n1594_008:0573c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說得不名法。",
        "from": "X85n1594_008:0573c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若了心非心。",
        "from": "X85n1594_008:0573c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始解心心法。",
        "from": "X85n1594_008:0573c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌遮迦說偈已。",
        "from": "X85n1594_008:0573c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入師子奮迅三昧。",
        "from": "X85n1594_008:0573c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踴身虗空。",
        "from": "X85n1594_008:0573c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高七多羅樹。",
        "from": "X85n1594_008:0573c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却復本座。",
        "from": "X85n1594_008:0573c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化火自焚。",
        "from": "X85n1594_008:0573c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆須蜜收靈骨。",
        "from": "X85n1594_008:0573c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貯七寶函。",
        "from": "X85n1594_008:0573c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建浮圖寘於上級。",
        "from": "X85n1594_008:0573c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土周襄王十五年甲申歲也。",
        "from": "X85n1594_008:0573c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(丁巳)震旦國李耳示生",
        "from": "X85n1594_008:0573c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周定王三年。",
        "from": "X85n1594_008:0573c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九月十四日。",
        "from": "X85n1594_008:0573c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老子生於楚國陳郡苦縣賴鄉曲仁里。",
        "from": "X85n1594_008:0573c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓李氏。",
        "from": "X85n1594_008:0573c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名耳。",
        "from": "X85n1594_008:0573c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字伯陽。",
        "from": "X85n1594_008:0573c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡曰聃。",
        "from": "X85n1594_008:0573c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在母胎八十一年。",
        "from": "X85n1594_008:0573c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剖左脇而生。",
        "from": "X85n1594_008:0573c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生即皓然。",
        "from": "X85n1594_008:0573c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故號老子。",
        "from": "X85n1594_008:0573c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生於李樹下。",
        "from": "X85n1594_008:0573c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故姓李。",
        "from": "X85n1594_008:0573c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃色美眉。",
        "from": "X85n1594_008:0573c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長耳大目。",
        "from": "X85n1594_008:0573c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻有雙柱。",
        "from": "X85n1594_008:0573c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳有三門。",
        "from": "X85n1594_008:0573c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦會中。",
        "from": "X85n1594_008:0573c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老子為迦葉菩薩。",
        "from": "X85n1594_008:0573c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X85n1594_008:0573c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉應生震旦。",
        "from": "X85n1594_008:0573c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示號老子。",
        "from": "X85n1594_008:0573c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設無外之教。",
        "from": "X85n1594_008:0573c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以治國。",
        "from": "X85n1594_008:0573c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假神仙之術。",
        "from": "X85n1594_008:0573c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以治身。",
        "from": "X85n1594_008:0573c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛滅至老子生。",
        "from": "X85n1594_008:0573c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡三百四十六年。",
        "from": "X85n1594_008:0574a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第八",
        "from": "X85n1594_008:0574a03_0",
        "context_with_next_sentence": false
    }
]