[
    {
        "source_sentence": "龍舒增廣淨土文卷第七",
        "from": "T47n1970_007:0275a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國學進士王日休譔",
        "from": "T47n1970_007:0275a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參禪者多不信淨土。",
        "from": "T47n1970_007:0275a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以謂著相。",
        "from": "T47n1970_007:0275a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲直指人心見性成佛。",
        "from": "T47n1970_007:0275a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說甚善。",
        "from": "T47n1970_007:0275a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極不易到。",
        "from": "T47n1970_007:0275a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反成弊者多矣。",
        "from": "T47n1970_007:0275a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今故詳言參禪之弊。",
        "from": "T47n1970_007:0275a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且引事跡為證。",
        "from": "T47n1970_007:0275a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸修行不知其要者。",
        "from": "T47n1970_007:0275a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "併舉而言。",
        "from": "T47n1970_007:0275a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故此卷名指迷歸要。",
        "from": "T47n1970_007:0275a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青草堂後身曾魯公",
        "from": "T47n1970_007:0275a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋朝有二青草堂。",
        "from": "T47n1970_007:0275a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在前者年九十餘。",
        "from": "T47n1970_007:0275a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有曾家婦人。",
        "from": "T47n1970_007:0275a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞為齋供及布施衣物。",
        "from": "T47n1970_007:0275a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚感其恩乃言。",
        "from": "T47n1970_007:0275a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老僧與夫人作兒子。",
        "from": "T47n1970_007:0275a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日此婦人生子。",
        "from": "T47n1970_007:0275a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使人看。",
        "from": "T47n1970_007:0275a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草堂已坐化矣。",
        "from": "T47n1970_007:0275a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生子即曾魯公也。",
        "from": "T47n1970_007:0275a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前世為僧。",
        "from": "T47n1970_007:0275a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗修福修慧故少年登高科。",
        "from": "T47n1970_007:0275a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後作宰相。",
        "from": "T47n1970_007:0275a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以世俗觀之無以加矣。",
        "from": "T47n1970_007:0275a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然此亦誤也。",
        "from": "T47n1970_007:0275a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何則此世界富貴不長久。",
        "from": "T47n1970_007:0275a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受盡則空。",
        "from": "T47n1970_007:0275a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又且隨業緣去。",
        "from": "T47n1970_007:0275a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪迴無有了時。",
        "from": "T47n1970_007:0275a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如且生西方見佛了生死大事。",
        "from": "T47n1970_007:0275a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却來作宰相。",
        "from": "T47n1970_007:0275a28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故雖入胞胎中受生。",
        "from": "T47n1970_007:0275a28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一性已不昧。",
        "from": "T47n1970_007:0275a29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以雖在輪迴世界中。",
        "from": "T47n1970_007:0275a29_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已不受輪迴。",
        "from": "T47n1970_007:0275b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生死去住自如矣。",
        "from": "T47n1970_007:0275b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今未能了生死。",
        "from": "T47n1970_007:0275b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃念區區恩惠。",
        "from": "T47n1970_007:0275b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人作子。",
        "from": "T47n1970_007:0275b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不脫貪愛。",
        "from": "T47n1970_007:0275b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永在輪迴。",
        "from": "T47n1970_007:0275b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其失計甚矣。",
        "from": "T47n1970_007:0275b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒禪師後身東坡",
        "from": "T47n1970_007:0275b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五祖禪師乃東坡前身。",
        "from": "T47n1970_007:0275b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應驗不一。",
        "from": "T47n1970_007:0275b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前世修行故。",
        "from": "T47n1970_007:0275b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今生聰明過人。",
        "from": "T47n1970_007:0275b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五毒氣習未除故。",
        "from": "T47n1970_007:0275b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今生多緣詩語。",
        "from": "T47n1970_007:0275b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意外受竄謫。",
        "from": "T47n1970_007:0275b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此亦大誤也。",
        "from": "T47n1970_007:0275b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若前世為僧。",
        "from": "T47n1970_007:0275b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參禪兼修西方。",
        "from": "T47n1970_007:0275b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必徑生淨土。",
        "from": "T47n1970_007:0275b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就大福大慧。",
        "from": "T47n1970_007:0275b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何至此世界多受苦惱哉。",
        "from": "T47n1970_007:0275b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞東坡南行。",
        "from": "T47n1970_007:0275b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯帶阿彌陀佛一軸。",
        "from": "T47n1970_007:0275b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人問其故。",
        "from": "T47n1970_007:0275b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答云。",
        "from": "T47n1970_007:0275b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此軾生西方公據也。",
        "from": "T47n1970_007:0275b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若果如是。",
        "from": "T47n1970_007:0275b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則東坡至此方為得計。",
        "from": "T47n1970_007:0275b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以宿植善根。",
        "from": "T47n1970_007:0275b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明達過人方悟此理故也。",
        "from": "T47n1970_007:0275b12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞魯直前世為婦人。",
        "from": "T47n1970_007:0275b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦法華經。",
        "from": "T47n1970_007:0275b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誦經功德故。",
        "from": "T47n1970_007:0275b13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世聰明有官職。",
        "from": "T47n1970_007:0275b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此隨業緣來者也。",
        "from": "T47n1970_007:0275b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生西方。",
        "from": "T47n1970_007:0275b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈如是而已哉。",
        "from": "T47n1970_007:0275b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哲老後身多憂苦",
        "from": "T47n1970_007:0275b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有哲老者。",
        "from": "T47n1970_007:0275b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住京師大剎。",
        "from": "T47n1970_007:0275b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四十年不睡。",
        "from": "T47n1970_007:0275b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐禪精苦。",
        "from": "T47n1970_007:0275b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此坐化。",
        "from": "T47n1970_007:0275b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後紙襖亦燒出舍利。",
        "from": "T47n1970_007:0275b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中官有以三十千買一紙襖者。",
        "from": "T47n1970_007:0275b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其有舍利故也。",
        "from": "T47n1970_007:0275b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其効驗已如此。",
        "from": "T47n1970_007:0275b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修西方。",
        "from": "T47n1970_007:0275b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必為不退轉地菩薩。",
        "from": "T47n1970_007:0275b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生死自如矣。",
        "from": "T47n1970_007:0275b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却來此世界濟渡眾生。",
        "from": "T47n1970_007:0275b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有何不可。",
        "from": "T47n1970_007:0275b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知修此。",
        "from": "T47n1970_007:0275b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃生大富貴處。",
        "from": "T47n1970_007:0275b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一生多受憂苦。",
        "from": "T47n1970_007:0275b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可哀也哉。",
        "from": "T47n1970_007:0275b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱使受大富貴。",
        "from": "T47n1970_007:0275b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦終有盡。",
        "from": "T47n1970_007:0275b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依舊輪迴。",
        "from": "T47n1970_007:0275b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或云。",
        "from": "T47n1970_007:0275b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以哲老之精修。",
        "from": "T47n1970_007:0275b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今生多受憂苦何也。",
        "from": "T47n1970_007:0275b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答云。",
        "from": "T47n1970_007:0275b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T47n1970_007:0275b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假令百千劫。",
        "from": "T47n1970_007:0275b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作業不亡。",
        "from": "T47n1970_007:0275b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣會遇時。",
        "from": "T47n1970_007:0275b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果報還自受。",
        "from": "T47n1970_007:0275b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉大師亦云。",
        "from": "T47n1970_007:0275b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了則業障本來空。",
        "from": "T47n1970_007:0275b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未了應須還宿債。",
        "from": "T47n1970_007:0275b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以哲老不曾了。",
        "from": "T47n1970_007:0275b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得生死大事。",
        "from": "T47n1970_007:0275b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世生於大富貴處。",
        "from": "T47n1970_007:0275b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃前生願心也。",
        "from": "T47n1970_007:0275b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多受憂苦者。",
        "from": "T47n1970_007:0275b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃因緣會遇而還千百世之宿債也。",
        "from": "T47n1970_007:0275b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生西方。",
        "from": "T47n1970_007:0275c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則宿債不須還矣。",
        "from": "T47n1970_007:0275c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何則死生自如故。",
        "from": "T47n1970_007:0275c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖入一切眾生生死界中。",
        "from": "T47n1970_007:0275c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不作濟渡。",
        "from": "T47n1970_007:0275c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一性已不昧。",
        "from": "T47n1970_007:0275c03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而超脫三界。",
        "from": "T47n1970_007:0275c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈須還宿債哉。",
        "from": "T47n1970_007:0275c03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且以哲老之精修。",
        "from": "T47n1970_007:0275c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶不能超脫三界。",
        "from": "T47n1970_007:0275c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非三界之岸極高。",
        "from": "T47n1970_007:0275c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其苦海極深。",
        "from": "T47n1970_007:0275c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其波濤極急。",
        "from": "T47n1970_007:0275c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不易超脫乎。",
        "from": "T47n1970_007:0275c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修西方而超脫者伏佛力也。",
        "from": "T47n1970_007:0275c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛而不倚仗。",
        "from": "T47n1970_007:0275c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶窮賤餓人見富貴者而不倚仗。",
        "from": "T47n1970_007:0275c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀哉。",
        "from": "T47n1970_007:0275c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古老後身耽富貴",
        "from": "T47n1970_007:0275c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有惠古長老。",
        "from": "T47n1970_007:0275c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先住舒州太平。",
        "from": "T47n1970_007:0275c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次住浙東大剎。",
        "from": "T47n1970_007:0275c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名行尊宿也。",
        "from": "T47n1970_007:0275c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死而生於宰相家。",
        "from": "T47n1970_007:0275c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後生登高科。",
        "from": "T47n1970_007:0275c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世固以為榮矣。",
        "from": "T47n1970_007:0275c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此甚失計也。",
        "from": "T47n1970_007:0275c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何則前世齋戒。",
        "from": "T47n1970_007:0275c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世食肉。",
        "from": "T47n1970_007:0275c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必以食肉為美矣。",
        "from": "T47n1970_007:0275c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前世清修。",
        "from": "T47n1970_007:0275c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世近色欲。",
        "from": "T47n1970_007:0275c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必以色欲為美矣。",
        "from": "T47n1970_007:0275c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前世恬靜。",
        "from": "T47n1970_007:0275c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今生享富貴。",
        "from": "T47n1970_007:0275c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必以富貴為美矣。",
        "from": "T47n1970_007:0275c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如入泥一步。",
        "from": "T47n1970_007:0275c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深如一步。",
        "from": "T47n1970_007:0275c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈之何哉。",
        "from": "T47n1970_007:0275c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楞嚴經云。",
        "from": "T47n1970_007:0275c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞所聞盡。",
        "from": "T47n1970_007:0275c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡聞不住。",
        "from": "T47n1970_007:0275c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺所覺空。",
        "from": "T47n1970_007:0275c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空覺極圓。",
        "from": "T47n1970_007:0275c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋謂所聞之事盡矣。",
        "from": "T47n1970_007:0275c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡聞其不住也。",
        "from": "T47n1970_007:0275c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故世間雖享快樂。",
        "from": "T47n1970_007:0275c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其如不住何不住則過去。",
        "from": "T47n1970_007:0275c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去則不能久也。",
        "from": "T47n1970_007:0275c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又覺其所覺者皆歸於空。",
        "from": "T47n1970_007:0275c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空則無實矣。",
        "from": "T47n1970_007:0275c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠能於此空而覺之則真覺之誠極圓。",
        "from": "T47n1970_007:0275c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無復墜墮也。",
        "from": "T47n1970_007:0275c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使古老而悟此理。",
        "from": "T47n1970_007:0275c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不住宰相家。",
        "from": "T47n1970_007:0275c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱未能悟明真性。",
        "from": "T47n1970_007:0275c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且修西方以脫去輪迴可也。",
        "from": "T47n1970_007:0275c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楞伽經謂。",
        "from": "T47n1970_007:0275c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間修行人如澄濁水。",
        "from": "T47n1970_007:0275c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄之雖清。",
        "from": "T47n1970_007:0275c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未去濁脚。",
        "from": "T47n1970_007:0275c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攪之復濁。",
        "from": "T47n1970_007:0275c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古老之謂也。",
        "from": "T47n1970_007:0275c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如生西方見佛得道。",
        "from": "T47n1970_007:0275c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復來生此世界。",
        "from": "T47n1970_007:0275c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則若刷去濁脚純為清水。",
        "from": "T47n1970_007:0275c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖攪之不復濁矣。",
        "from": "T47n1970_007:0275c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故雖名行尊宿。",
        "from": "T47n1970_007:0275c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不可不修西方。",
        "from": "T47n1970_007:0275c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古老足以鑒矣。",
        "from": "T47n1970_007:0275c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方如現受官",
        "from": "T47n1970_007:0275c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如人有一官而不受。",
        "from": "T47n1970_007:0276a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必欲修學為大魁。",
        "from": "T47n1970_007:0276a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其志固美矣。",
        "from": "T47n1970_007:0276a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然大魁不可必得固。",
        "from": "T47n1970_007:0276a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不若且受其官。",
        "from": "T47n1970_007:0276a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一向修學。",
        "from": "T47n1970_007:0276a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如得大魁。",
        "from": "T47n1970_007:0276a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則若錦上添花。",
        "from": "T47n1970_007:0276a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不得之。",
        "from": "T47n1970_007:0276a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不失其為官人。",
        "from": "T47n1970_007:0276a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修西方者且受官之謂也。",
        "from": "T47n1970_007:0276a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一向修學者。",
        "from": "T47n1970_007:0276a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼以參禪方謂也。",
        "from": "T47n1970_007:0276a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得大魁者。",
        "from": "T47n1970_007:0276a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參禪未悟之謂也。",
        "from": "T47n1970_007:0276a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不失其為官人者。",
        "from": "T47n1970_007:0276a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直脫輪迴。",
        "from": "T47n1970_007:0276a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大受快樂之謂也。",
        "from": "T47n1970_007:0276a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既生西方見佛聞法。",
        "from": "T47n1970_007:0276a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏有不大悟哉。",
        "from": "T47n1970_007:0276a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故西方之說誠不可廢。",
        "from": "T47n1970_007:0276a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三菩薩修兜率",
        "from": "T47n1970_007:0276a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者十疑論云。",
        "from": "T47n1970_007:0276a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三菩薩修兜率。",
        "from": "T47n1970_007:0276a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名無著。",
        "from": "T47n1970_007:0276a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二名世親。",
        "from": "T47n1970_007:0276a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三名師子覺。",
        "from": "T47n1970_007:0276a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若云先生兜率見彌勒者即來相報。",
        "from": "T47n1970_007:0276a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子覺先亡數年無報。",
        "from": "T47n1970_007:0276a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次世親亡三年乃來報云。",
        "from": "T47n1970_007:0276a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天日長。",
        "from": "T47n1970_007:0276a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我生兜率。",
        "from": "T47n1970_007:0276a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮彌勒佛。",
        "from": "T47n1970_007:0276a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽其說法。",
        "from": "T47n1970_007:0276a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即來相報。",
        "from": "T47n1970_007:0276a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已三年矣。",
        "from": "T47n1970_007:0276a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問師子覺如何。",
        "from": "T47n1970_007:0276a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云。",
        "from": "T47n1970_007:0276a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生兜率外院。",
        "from": "T47n1970_007:0276a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戀著天樂。",
        "from": "T47n1970_007:0276a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即不曾見佛。",
        "from": "T47n1970_007:0276a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且以菩薩而修。",
        "from": "T47n1970_007:0276a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兜率猶有戀著不見佛者。",
        "from": "T47n1970_007:0276a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此輪迴之根本。",
        "from": "T47n1970_007:0276a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知兜率難修有墜。",
        "from": "T47n1970_007:0276a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非比西方易修無墜也。",
        "from": "T47n1970_007:0276a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者又云。",
        "from": "T47n1970_007:0276a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有見釋迦佛而不得道者。",
        "from": "T47n1970_007:0276a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修西方見阿彌陀佛。",
        "from": "T47n1970_007:0276a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不得道。",
        "from": "T47n1970_007:0276a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則釋迦佛與阿彌陀佛。",
        "from": "T47n1970_007:0276a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其願力功德威神小大固不同矣。",
        "from": "T47n1970_007:0276a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故大慈菩薩云。",
        "from": "T47n1970_007:0276a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方三世佛阿彌陀第一。",
        "from": "T47n1970_007:0276a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念其名號。",
        "from": "T47n1970_007:0276a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消一切罪。",
        "from": "T47n1970_007:0276a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂生淨土。",
        "from": "T47n1970_007:0276a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜哉。",
        "from": "T47n1970_007:0276a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華尼後身作官妓",
        "from": "T47n1970_007:0276a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歐陽永叔知頴州。",
        "from": "T47n1970_007:0276a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一官妓口氣作蓮華香。",
        "from": "T47n1970_007:0276a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有僧知宿命言。",
        "from": "T47n1970_007:0276a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此妓前世為尼。",
        "from": "T47n1970_007:0276a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦法華經三十年。",
        "from": "T47n1970_007:0276a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念之差遂至於此。",
        "from": "T47n1970_007:0276a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問妓云。",
        "from": "T47n1970_007:0276a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾讀法華否。",
        "from": "T47n1970_007:0276a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "T47n1970_007:0276a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失身於此。",
        "from": "T47n1970_007:0276a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何暇誦經。",
        "from": "T47n1970_007:0276a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與以法華。",
        "from": "T47n1970_007:0276a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則讀誦如流。",
        "from": "T47n1970_007:0276a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與之他經。",
        "from": "T47n1970_007:0276a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不能讀。",
        "from": "T47n1970_007:0276a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此知僧言可信矣。",
        "from": "T47n1970_007:0276a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使此尼知西方法門。",
        "from": "T47n1970_007:0276a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則上品上生可也。",
        "from": "T47n1970_007:0276a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知而墜墮於妓。",
        "from": "T47n1970_007:0276a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可不哀哉。",
        "from": "T47n1970_007:0276b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此知。",
        "from": "T47n1970_007:0276b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能用西方法門教人者。",
        "from": "T47n1970_007:0276b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其濟拔之功大矣。",
        "from": "T47n1970_007:0276b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福報豈易量哉。",
        "from": "T47n1970_007:0276b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二緣圖",
        "from": "T47n1970_007:0276b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界六道輪迴圖",
        "from": "T47n1970_007:0276b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明謂暗昧真性。",
        "from": "T47n1970_007:0276c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行謂動作。",
        "from": "T47n1970_007:0276c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識謂魂識。",
        "from": "T47n1970_007:0276c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　自阿鼻大地獄至他(長行寫者是十二因緣圖短行寫者是三界六道圖)。",
        "from": "T47n1970_007:0276c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名謂受想行識。",
        "from": "T47n1970_007:0276c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色謂色身。",
        "from": "T47n1970_007:0276c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六入謂六根。",
        "from": "T47n1970_007:0276c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　化自在天。",
        "from": "T47n1970_007:0276c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆名欲界。",
        "from": "T47n1970_007:0276c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觸謂觸六根者。",
        "from": "T47n1970_007:0276c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因暗昧真性故。",
        "from": "T47n1970_007:0276c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能寂。",
        "from": "T47n1970_007:0276c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　以有情欲也。",
        "from": "T47n1970_007:0276c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有色。",
        "from": "T47n1970_007:0276c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然不動。",
        "from": "T47n1970_007:0276c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃生魂識。",
        "from": "T47n1970_007:0276c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因有名色。",
        "from": "T47n1970_007:0276c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有六入。",
        "from": "T47n1970_007:0276c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　界。",
        "from": "T47n1970_007:0276c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止有色身無男女。",
        "from": "T47n1970_007:0276c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因六入故有觸。",
        "from": "T47n1970_007:0276c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因觸故受。",
        "from": "T47n1970_007:0276c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因受故愛。",
        "from": "T47n1970_007:0276c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因。",
        "from": "T47n1970_007:0276c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　之形。",
        "from": "T47n1970_007:0276c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又上有無色界。",
        "from": "T47n1970_007:0276c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛故取。",
        "from": "T47n1970_007:0276c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因取故常有。",
        "from": "T47n1970_007:0276c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之因此復受生。",
        "from": "T47n1970_007:0276c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因。",
        "from": "T47n1970_007:0276c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　亦無色身。",
        "from": "T47n1970_007:0276c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止有魂識。",
        "from": "T47n1970_007:0276c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生故有老死相牽。",
        "from": "T47n1970_007:0276c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣不斷故名十二緣。",
        "from": "T47n1970_007:0276c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如鬼神。",
        "from": "T47n1970_007:0276c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此總名三界。",
        "from": "T47n1970_007:0276c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　觀此豈可迷於他塗而不修西方。",
        "from": "T47n1970_007:0276c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍舒增廣淨土文卷第七(終)",
        "from": "T47n1970_007:0276c16_0",
        "context_with_next_sentence": false
    }
]