[
    {
        "source_sentence": "廣釋菩提心論卷第四",
        "from": "T32n1664_004:0570b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華戒菩薩造",
        "from": "T32n1664_004:0570b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏傳法大師",
        "from": "T32n1664_004:0570b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜紫臣施護等奉　詔譯",
        "from": "T32n1664_004:0570b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次此中如寶雲經說。",
        "from": "T32n1664_004:0570b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩云何得大乘法。",
        "from": "T32n1664_004:0570b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂若菩薩善學一切法。",
        "from": "T32n1664_004:0570b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼雖有學而於學時。",
        "from": "T32n1664_004:0570b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及所學法悉不可得。",
        "from": "T32n1664_004:0570b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖於學中決定無所得。",
        "from": "T32n1664_004:0570b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於彼因緣法中而起斷見。",
        "from": "T32n1664_004:0570b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如聖法集經說。",
        "from": "T32n1664_004:0570b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何是諸菩薩所行。",
        "from": "T32n1664_004:0570b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂若菩薩於身語意諸所行中。",
        "from": "T32n1664_004:0570b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長時不捨一切眾生。",
        "from": "T32n1664_004:0570b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內心發起大悲增上。",
        "from": "T32n1664_004:0570b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利樂諸眾生故。",
        "from": "T32n1664_004:0570b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應作是念。",
        "from": "T32n1664_004:0570b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若我現行及已行行。",
        "from": "T32n1664_004:0570b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉與一切眾生。",
        "from": "T32n1664_004:0570b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施作廣大利益安樂。",
        "from": "T32n1664_004:0570b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩雖觀諸蘊如幻。",
        "from": "T32n1664_004:0570b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於中而生厭捨。",
        "from": "T32n1664_004:0570b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所行悉無障礙。",
        "from": "T32n1664_004:0570b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處如空聚。",
        "from": "T32n1664_004:0570b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於中而生厭捨。",
        "from": "T32n1664_004:0570b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所行悉無障礙。",
        "from": "T32n1664_004:0570b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "界如蛇毒。",
        "from": "T32n1664_004:0570b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於中而生厭捨。",
        "from": "T32n1664_004:0570b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所行悉無障礙。",
        "from": "T32n1664_004:0570b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復雖觀色如聚沫。",
        "from": "T32n1664_004:0570b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不捨離如來色身相好。",
        "from": "T32n1664_004:0570b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受如浮泡。",
        "from": "T32n1664_004:0570b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於諸如來禪定三摩地三摩鉢底出生妙樂中不起方便。",
        "from": "T32n1664_004:0570b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如陽焰。",
        "from": "T32n1664_004:0570c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於諸如來智中不起勝想。",
        "from": "T32n1664_004:0570c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行如芭蕉。",
        "from": "T32n1664_004:0570c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於一切佛法行中而無所行。",
        "from": "T32n1664_004:0570c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識如幻士。",
        "from": "T32n1664_004:0570c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不於如來三業智為先導中而無所行。",
        "from": "T32n1664_004:0570c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切所行。",
        "from": "T32n1664_004:0570c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉無障礙。",
        "from": "T32n1664_004:0570c05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次諸經皆說。",
        "from": "T32n1664_004:0570c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知慧及方便。",
        "from": "T32n1664_004:0570c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸菩薩正所行行。",
        "from": "T32n1664_004:0570c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故諸菩薩於彼無數一切行中。",
        "from": "T32n1664_004:0570c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常所發起慧及方便。",
        "from": "T32n1664_004:0570c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想修作長時無間。",
        "from": "T32n1664_004:0570c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是即得十二分位。",
        "from": "T32n1664_004:0570c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸地位得安立已。",
        "from": "T32n1664_004:0570c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼位中勝上功德皆悉具足。",
        "from": "T32n1664_004:0570c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言十二分位者。",
        "from": "T32n1664_004:0570c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂信解行地乃至佛地。",
        "from": "T32n1664_004:0570c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等地中但除佛地。",
        "from": "T32n1664_004:0570c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘皆是異生及菩薩攝。",
        "from": "T32n1664_004:0570c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中信解行地者。",
        "from": "T32n1664_004:0570c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未能證得二無我理。",
        "from": "T32n1664_004:0570c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一向發起堅固信解。",
        "from": "T32n1664_004:0570c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔不能動。",
        "from": "T32n1664_004:0570c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼信解力亦未能觀唯識實性。",
        "from": "T32n1664_004:0570c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但於堅固信解法中。",
        "from": "T32n1664_004:0570c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立解行地。",
        "from": "T32n1664_004:0570c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又諸地中。",
        "from": "T32n1664_004:0570c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨應各具無數三摩地總持解脫神通等諸功德。",
        "from": "T32n1664_004:0570c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寶雲經說。",
        "from": "T32n1664_004:0570c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安立四種順決擇分。",
        "from": "T32n1664_004:0570c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼四位。",
        "from": "T32n1664_004:0570c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有軟中上智光明出。",
        "from": "T32n1664_004:0570c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此四皆觀諸法無我。",
        "from": "T32n1664_004:0570c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中若有軟品智光明生。",
        "from": "T32n1664_004:0570c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為煖位。",
        "from": "T32n1664_004:0570c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼所證定名為明得。",
        "from": "T32n1664_004:0570c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有中品智光明生。",
        "from": "T32n1664_004:0570c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為頂位。",
        "from": "T32n1664_004:0570c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼所證定名為明增。",
        "from": "T32n1664_004:0570c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有最上外無對礙智光明生。",
        "from": "T32n1664_004:0570c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心分位離能取相。",
        "from": "T32n1664_004:0570c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名忍位。",
        "from": "T32n1664_004:0570c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼所證定名一分入。",
        "from": "T32n1664_004:0570c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於能取所取相中悉無所得。",
        "from": "T32n1664_004:0570c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無二智。",
        "from": "T32n1664_004:0570c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定印彼二取相空。",
        "from": "T32n1664_004:0570c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為世第一位。",
        "from": "T32n1664_004:0570c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼所證定名為無間。",
        "from": "T32n1664_004:0570c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此無間入唯識性。",
        "from": "T32n1664_004:0570c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中總略。",
        "from": "T32n1664_004:0570c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等說。",
        "from": "T32n1664_004:0570c26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是信解行地所攝。",
        "from": "T32n1664_004:0570c26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次十地即十分位。",
        "from": "T32n1664_004:0570c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼初地者。",
        "from": "T32n1664_004:0570c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從前世第一法無間初心得入見道。",
        "from": "T32n1664_004:0570c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既獲聖性生大歡喜。",
        "from": "T32n1664_004:0570c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名歡喜地。",
        "from": "T32n1664_004:0571a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此能分證二無我理。",
        "from": "T32n1664_004:0571a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法無性真實智生。",
        "from": "T32n1664_004:0571a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切分別戲論悉離。",
        "from": "T32n1664_004:0571a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中能斷一百一十二見所斷惑。",
        "from": "T32n1664_004:0571a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘修所斷三界總有一十六惑如應而斷。",
        "from": "T32n1664_004:0571a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩得平等智。",
        "from": "T32n1664_004:0571a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自利利他。",
        "from": "T32n1664_004:0571a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於施波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住三摩地。",
        "from": "T32n1664_004:0571a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能遠離微細毀犯垢染。",
        "from": "T32n1664_004:0571a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居二地。",
        "from": "T32n1664_004:0571a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼二地者。",
        "from": "T32n1664_004:0571a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能離一切犯戒垢染。",
        "from": "T32n1664_004:0571a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名離垢地。",
        "from": "T32n1664_004:0571a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩能正遠離微細犯戒垢染。",
        "from": "T32n1664_004:0571a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於戒波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能成就勝三摩地三摩鉢底及聞總持。",
        "from": "T32n1664_004:0571a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居三地。",
        "from": "T32n1664_004:0571a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼三地者。",
        "from": "T32n1664_004:0571a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能發無量勝智光明。",
        "from": "T32n1664_004:0571a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名發光地。",
        "from": "T32n1664_004:0571a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩普盡獲得勝三摩地及聞總持。",
        "from": "T32n1664_004:0571a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪忍諸苦。",
        "from": "T32n1664_004:0571a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於忍波羅蜜多而得圓滿已。",
        "from": "T32n1664_004:0571a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切三摩鉢底愛心中捨。",
        "from": "T32n1664_004:0571a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能廣修菩提分法。",
        "from": "T32n1664_004:0571a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居四地。",
        "from": "T32n1664_004:0571a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼四地者。",
        "from": "T32n1664_004:0571a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提分法慧焰。",
        "from": "T32n1664_004:0571a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能燒諸煩惱薪。",
        "from": "T32n1664_004:0571a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名焰慧地。",
        "from": "T32n1664_004:0571a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩已離缺減語意分別。",
        "from": "T32n1664_004:0571a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善修無缺減菩提分法。",
        "from": "T32n1664_004:0571a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於精進波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能作四諦觀。",
        "from": "T32n1664_004:0571a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居五地。",
        "from": "T32n1664_004:0571a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼五地者。",
        "from": "T32n1664_004:0571a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死涅槃。",
        "from": "T32n1664_004:0571a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善方便觀察平等。",
        "from": "T32n1664_004:0571a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極難中勝是勝修習。",
        "from": "T32n1664_004:0571a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名難勝地。",
        "from": "T32n1664_004:0571a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩於四聖諦中。",
        "from": "T32n1664_004:0571a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能善觀察多所修作。",
        "from": "T32n1664_004:0571a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於定波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從順決擇分出至此地中。",
        "from": "T32n1664_004:0571a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始得無相之行。",
        "from": "T32n1664_004:0571a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能作緣生觀。",
        "from": "T32n1664_004:0571a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居六地。",
        "from": "T32n1664_004:0571a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼六地者勝慧具已。",
        "from": "T32n1664_004:0571a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能隨轉一切佛法勝現前門。",
        "from": "T32n1664_004:0571a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名現前地。",
        "from": "T32n1664_004:0571a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩能善觀察緣生之法。",
        "from": "T32n1664_004:0571a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於慧波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲無相行。",
        "from": "T32n1664_004:0571b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能圓滿是行。",
        "from": "T32n1664_004:0571b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居七地。",
        "from": "T32n1664_004:0571b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼七地者。",
        "from": "T32n1664_004:0571b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無功用方便道中。",
        "from": "T32n1664_004:0571b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖未能具。",
        "from": "T32n1664_004:0571b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以涉遠故。",
        "from": "T32n1664_004:0571b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名遠行地。",
        "from": "T32n1664_004:0571b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩觀一切相皆如化事。",
        "from": "T32n1664_004:0571b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實了知相用所行悉無違礙。",
        "from": "T32n1664_004:0571b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼能成就無相之行。",
        "from": "T32n1664_004:0571b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於方便波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未具無功用行。",
        "from": "T32n1664_004:0571b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居八地。",
        "from": "T32n1664_004:0571b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼八地者。",
        "from": "T32n1664_004:0571b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸相用等悉不能動。",
        "from": "T32n1664_004:0571b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名不動地。",
        "from": "T32n1664_004:0571b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩善得無相功用行。",
        "from": "T32n1664_004:0571b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於願波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能分別一切相說法自在。",
        "from": "T32n1664_004:0571b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居九地。",
        "from": "T32n1664_004:0571b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼九地者。",
        "from": "T32n1664_004:0571b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具最勝慧善說諸法。",
        "from": "T32n1664_004:0571b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名善慧地。",
        "from": "T32n1664_004:0571b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩得彼最勝四無礙解慧力相應。",
        "from": "T32n1664_004:0571b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於力波羅蜜多而得圓滿。",
        "from": "T32n1664_004:0571b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能於佛剎會中隨應化現說法利生自在圓滿。",
        "from": "T32n1664_004:0571b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居十地。",
        "from": "T32n1664_004:0571b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼十地者。",
        "from": "T32n1664_004:0571b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於無邊一切世界。",
        "from": "T32n1664_004:0571b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布大法雲灑甘露雨。",
        "from": "T32n1664_004:0571b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說此名法雲地。",
        "from": "T32n1664_004:0571b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此位菩薩勝智相應說法利生。",
        "from": "T32n1664_004:0571b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作諸化事悉得自在。",
        "from": "T32n1664_004:0571b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未能於一切所知一切相中獲無礙智。",
        "from": "T32n1664_004:0571b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能分得進居佛地。",
        "from": "T32n1664_004:0571b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸地所有建立行相。",
        "from": "T32n1664_004:0571b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如和合解脫經說。",
        "from": "T32n1664_004:0571b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此諸地所有廣說。",
        "from": "T32n1664_004:0571b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊等清淨及分位相。",
        "from": "T32n1664_004:0571b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘處有文恐繁且止。",
        "from": "T32n1664_004:0571b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次佛地即一分位。",
        "from": "T32n1664_004:0571b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此佛地者。",
        "from": "T32n1664_004:0571b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切勝相皆悉具足。",
        "from": "T32n1664_004:0571b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切功德皆悉圓滿。",
        "from": "T32n1664_004:0571b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能普盡一切邊際。",
        "from": "T32n1664_004:0571b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過此無別勝上分位。",
        "from": "T32n1664_004:0571b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而佛地中所有功德。",
        "from": "T32n1664_004:0571b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正使諸佛以妙言詞。",
        "from": "T32n1664_004:0571b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而亦不能稱揚一分。",
        "from": "T32n1664_004:0571b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知。",
        "from": "T32n1664_004:0571c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛功德無量無邊不可稱計。",
        "from": "T32n1664_004:0571c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛世尊自然智觀自證知故。",
        "from": "T32n1664_004:0571c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如華嚴經中所說功德。",
        "from": "T32n1664_004:0571c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦即一分未能窮盡故。",
        "from": "T32n1664_004:0571c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復我今造此論者。",
        "from": "T32n1664_004:0571c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢以言詞具讚說耶。",
        "from": "T32n1664_004:0571c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又佛地中所有功德。",
        "from": "T32n1664_004:0571c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總攝一切殊勝之義。",
        "from": "T32n1664_004:0571c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如楞伽經說。",
        "from": "T32n1664_004:0571c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次頌曰。",
        "from": "T32n1664_004:0571c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　應當了知三身者　　普攝諸佛一切身　最上勝義法所依　　是故開顯三身相　自性身及正報身　　化身等三最勝上　分別諸佛所有身　　初身與二為依止　已修難行希有行　　百種鍊磨安忍心　所有一切眾善門　　普能積集無遺棄　無量劫來久修習　　大乘最上妙法門　一切障礙悉蠲除　　盡滅無餘得清淨　因中所有微細障　　果中智力悉拔除　譬如妙寶始開函　　放淨光明照一切　隨順世間現有生　　歷苦勤求菩提果　說法化利百千門　　遍一切處善施作　如來高顯復不動　　安住世間大聖尊　如彼須彌眾山王　　觀仰巍巍最高勝　大以悲心為根本　　三摩地門善出生　遍三有中現其身　　一切無不示生處　如淨日輪放一光　　普遍世間悉照耀　諸佛聖智妙光明　　能知諸法亦如是　諸聲聞人所證果　　出離世間為最勝　而彼聲聞所得中　　又復不如緣覺地　緣覺若比菩薩地　　於諸分中不及一　菩薩較計佛如來　　倍多分中不及一　如來所證菩提果　　無量功德不思議　如其時處所應行　　隨順方便而善轉　果中所證最勝上　　五根清淨妙用成　十二位中功德門　　彼一切義皆能轉　果中所證最勝上　　一切意道皆清淨　如其所證悉應知　　一切無垢無分別　果中所證最勝上　　攝諸義利皆清淨　佛剎清淨如所應　　一切自在而出現　果中所證最勝上　　一切分別悉清淨　所作不壞常時中　　善修一切智事業　果中所證最勝上　　一切清淨善安住　已得無住大涅槃　　圓滿諸佛清淨句　果中所證最勝上　　一切染法已清淨　不雜煩惱本無瑕　　常入諸佛妙樂行　果中所證最勝上　　想如虛空悉清淨　積集廣大勝義門　　離諸色相而觀察　如來化相極廣大　　此無量行皆清淨　成所作智妙難思　　諸佛無垢勝依止此中當知。",
        "from": "T32n1664_004:0571c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨法界即一切法真如。",
        "from": "T32n1664_004:0572a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切法無顛倒自性正因。",
        "from": "T32n1664_004:0572a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能出生諸佛及諸佛智。",
        "from": "T32n1664_004:0572a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障染。",
        "from": "T32n1664_004:0572a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立三摩地總持法門。",
        "from": "T32n1664_004:0572a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘無量福智諸行。",
        "from": "T32n1664_004:0572a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切眾生利樂等事。",
        "from": "T32n1664_004:0572a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成熟一切正法聞知種子。",
        "from": "T32n1664_004:0572a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等相皆得成就。",
        "from": "T32n1664_004:0572a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言諸佛智者。",
        "from": "T32n1664_004:0572a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂即四智。",
        "from": "T32n1664_004:0572a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初大圓鏡智。",
        "from": "T32n1664_004:0572a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是智遠離我我所相。",
        "from": "T32n1664_004:0572a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及離能取所取分別。",
        "from": "T32n1664_004:0572a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不雜一切煩惱垢染。",
        "from": "T32n1664_004:0572a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切所緣所行所知相中。",
        "from": "T32n1664_004:0572a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不忘不愚。",
        "from": "T32n1664_004:0572a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智影相生現種依持。",
        "from": "T32n1664_004:0572a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切智所依清淨。",
        "from": "T32n1664_004:0572a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即真如所緣無分別智。",
        "from": "T32n1664_004:0572a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二平等性智。",
        "from": "T32n1664_004:0572a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得勝上所緣。",
        "from": "T32n1664_004:0572a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是智能觀自他平等。",
        "from": "T32n1664_004:0572a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能安處無住涅槃。",
        "from": "T32n1664_004:0572a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大慈悲隨往一切現身現上以善方便畢竟相應。",
        "from": "T32n1664_004:0572a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三妙觀察智。",
        "from": "T32n1664_004:0572b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普攝一切三摩地三摩鉢底總持法門。",
        "from": "T32n1664_004:0572b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切所知分位。",
        "from": "T32n1664_004:0572b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無礙而轉及能發生勝功德寶。",
        "from": "T32n1664_004:0572b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便現身善斷眾疑。",
        "from": "T32n1664_004:0572b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其所應能善說法。",
        "from": "T32n1664_004:0572b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四成所作智。",
        "from": "T32n1664_004:0572b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以種種不思議方便。",
        "from": "T32n1664_004:0572b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他成熟一切所作。",
        "from": "T32n1664_004:0572b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如應化度一切眾生。",
        "from": "T32n1664_004:0572b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等相是為四智。",
        "from": "T32n1664_004:0572b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次頌曰。",
        "from": "T32n1664_004:0572b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　三身分位二二一　　二法二報一化身　諸佛清淨法界中　　若一若多性不立此中意者。",
        "from": "T32n1664_004:0572b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨法身猶如虛空而無形相。",
        "from": "T32n1664_004:0572b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是身中流出一切法。",
        "from": "T32n1664_004:0572b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等皆是妙無比喻最勝白法。",
        "from": "T32n1664_004:0572b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨真理大利樂因。",
        "from": "T32n1664_004:0572b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生佛地最上善樂。",
        "from": "T32n1664_004:0572b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能圓滿無盡法海。",
        "from": "T32n1664_004:0572b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能具足清淨妙慧。",
        "from": "T32n1664_004:0572b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能成就大菩提心。",
        "from": "T32n1664_004:0572b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所釋菩提心義。",
        "from": "T32n1664_004:0572b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸經中略集要文。",
        "from": "T32n1664_004:0572b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛菩薩能盡知見。",
        "from": "T32n1664_004:0572b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣釋菩提心論卷第四",
        "from": "T32n1664_004:0572b16_0",
        "context_with_next_sentence": false
    }
]