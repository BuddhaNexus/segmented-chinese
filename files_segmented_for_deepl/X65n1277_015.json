[
    {
        "source_sentence": "高峯龍泉院因師集賢語錄卷之十五",
        "from": "X65n1277_015:0053a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自陳情詞門",
        "from": "X65n1277_015:0053a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因師自敘",
        "from": "X65n1277_015:0053a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "野釋比丘德因。",
        "from": "X65n1277_015:0053a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命屬丙申月居乙未。",
        "from": "X65n1277_015:0053a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癸酉臨日癸亥直時。",
        "from": "X65n1277_015:0053a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丙戌生胎年庚多蹇。",
        "from": "X65n1277_015:0053a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夙植德本幸處中華。",
        "from": "X65n1277_015:0053a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷父母之生成。",
        "from": "X65n1277_015:0053a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感乾坤之覆蓋。",
        "from": "X65n1277_015:0053a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼年十歲嚴君違背以早亡。",
        "from": "X65n1277_015:0053a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持服五冬慈母拋離而改嫁。",
        "from": "X65n1277_015:0053a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤苦備甞艱險。",
        "from": "X65n1277_015:0053a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忖思豈不傷嗟。",
        "from": "X65n1277_015:0053a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓捨俗以辭親。",
        "from": "X65n1277_015:0053a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願出家而歸佛。",
        "from": "X65n1277_015:0053a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空門喜入未登星紀之兩暮。",
        "from": "X65n1277_015:0053a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丈室亹鐘不幸先師之一別。",
        "from": "X65n1277_015:0053a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓寂師資纔周祥縛。",
        "from": "X65n1277_015:0053a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖善母氏遽返泉關。",
        "from": "X65n1277_015:0053a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災連禍併於一時。",
        "from": "X65n1277_015:0053a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦極悲摧之萬狀。",
        "from": "X65n1277_015:0053a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自嘆閻浮六十甲子已經。",
        "from": "X65n1277_015:0053a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵世二九春秋虗負。",
        "from": "X65n1277_015:0053a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲時空擔日月。",
        "from": "X65n1277_015:0053a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "己身未求東度。",
        "from": "X65n1277_015:0053a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母須願西歸。",
        "from": "X65n1277_015:0053a16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不免捨身浪遊。",
        "from": "X65n1277_015:0053a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蹇跡本貫。",
        "from": "X65n1277_015:0053a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫浦流寓凌江曲江。",
        "from": "X65n1277_015:0053a17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫駐翁源。",
        "from": "X65n1277_015:0053a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復迴始邑保邑。",
        "from": "X65n1277_015:0053a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叢林走遍。",
        "from": "X65n1277_015:0053a18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未逢明眼宗師。",
        "from": "X65n1277_015:0053a18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拄杖拈歸。",
        "from": "X65n1277_015:0053a19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且卜安身住舍。",
        "from": "X65n1277_015:0053a19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信步尋遊彼地。",
        "from": "X65n1277_015:0053a19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因行登覽高山。",
        "from": "X65n1277_015:0053a19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有荒頹古剎道場認漫滅龍泉匾額。",
        "from": "X65n1277_015:0053a20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四圍荊棘垣墻倒塌草生堦。",
        "from": "X65n1277_015:0053a20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩畔蓬茅堂殿傾斜藤盖瓦。",
        "from": "X65n1277_015:0053a21_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "線路行須斂脚。",
        "from": "X65n1277_015:0053a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衡門入要鞠躬。",
        "from": "X65n1277_015:0053a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "借問居鄰。",
        "from": "X65n1277_015:0053a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷知事實。",
        "from": "X65n1277_015:0053a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久無僧行。",
        "from": "X65n1277_015:0053a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡拘常住入官司。",
        "from": "X65n1277_015:0053a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僅有法堂。",
        "from": "X65n1277_015:0053a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰管兩霖沾佛像。",
        "from": "X65n1277_015:0053a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細觀境界頗遠俗[序予+(壟月+日)]。",
        "from": "X65n1277_015:0053a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山水來朝院門豈應久廢。",
        "from": "X65n1277_015:0053a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍神有感伽藍自合重興。",
        "from": "X65n1277_015:0053b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始創規模年方念五。",
        "from": "X65n1277_015:0053b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮成基址齒已三旬。",
        "from": "X65n1277_015:0053b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙朝廷而頒降勑綾。",
        "from": "X65n1277_015:0053b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦心力而進納財物。",
        "from": "X65n1277_015:0053b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣舉貸糜費不下千緡。",
        "from": "X65n1277_015:0053b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竭意營求幸滿從初一願。",
        "from": "X65n1277_015:0053b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十磨九難。",
        "from": "X65n1277_015:0053b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬苦千辛。",
        "from": "X65n1277_015:0053b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰憑佛力就中扶。",
        "from": "X65n1277_015:0053b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且喜僧緣於彼獲。",
        "from": "X65n1277_015:0053b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當年僥倖祖師傳無相三衣。",
        "from": "X65n1277_015:0053b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次歲亨通使府帖差兼兩所。",
        "from": "X65n1277_015:0053b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "管佃蓮花眾福。",
        "from": "X65n1277_015:0053b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住持本院龍泉。",
        "from": "X65n1277_015:0053b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來數載循環。",
        "from": "X65n1277_015:0053b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "批判三場公案。",
        "from": "X65n1277_015:0053b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿債解除五百索。",
        "from": "X65n1277_015:0053b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "袈裟緣結二三員。",
        "from": "X65n1277_015:0053b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆因逐歲勤勞。",
        "from": "X65n1277_015:0053b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡是隨緣節儉。",
        "from": "X65n1277_015:0053b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿井開池通水利。",
        "from": "X65n1277_015:0053b08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "架橋貼道便人行。",
        "from": "X65n1277_015:0053b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "田庄增置而接待十方。",
        "from": "X65n1277_015:0053b09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花果剩[栽木+土]而供陳三界。",
        "from": "X65n1277_015:0053b09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開基剏造闔寺周圓。",
        "from": "X65n1277_015:0053b10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一新殿宇而金碧巍煌。",
        "from": "X65n1277_015:0053b10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重塑聖容而丹青顯飾。",
        "from": "X65n1277_015:0053b11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敷設幡花供養。",
        "from": "X65n1277_015:0053b11_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒燃香燭瞻依。",
        "from": "X65n1277_015:0053b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上報四恩。",
        "from": "X65n1277_015:0053b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下資三有。",
        "from": "X65n1277_015:0053b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫道教門無驗。",
        "from": "X65n1277_015:0053b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只恐人心不堅。",
        "from": "X65n1277_015:0053b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年已四旬自喜平生滿願。",
        "from": "X65n1277_015:0053b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心澄萬慮且隨緣分安居。",
        "from": "X65n1277_015:0053b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細綿布衲逐時縫。",
        "from": "X65n1277_015:0053b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羮飯野蔬隨日度。",
        "from": "X65n1277_015:0053b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要覔無生話。",
        "from": "X65n1277_015:0053b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須延有永年。",
        "from": "X65n1277_015:0053b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但教心地坦平。",
        "from": "X65n1277_015:0053b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "管取龍天擁護。",
        "from": "X65n1277_015:0053b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開山營創牓",
        "from": "X65n1277_015:0053b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高峯山龍泉院。",
        "from": "X65n1277_015:0053b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏覩本院久闕住持。",
        "from": "X65n1277_015:0053b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殿宇崩頹門廊倒塌。",
        "from": "X65n1277_015:0053b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一望棟梁俱壞。",
        "from": "X65n1277_015:0053b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四圍荊棘遍生。",
        "from": "X65n1277_015:0053b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "架造年深頹弊日甚。",
        "from": "X65n1277_015:0053b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所幸法堂三間尚在。",
        "from": "X65n1277_015:0053b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可憐院門一物全無。",
        "from": "X65n1277_015:0053b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者酸心。",
        "from": "X65n1277_015:0053b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞之興嘆。",
        "from": "X65n1277_015:0053b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(德因)蒙使府帖差掃洒。",
        "from": "X65n1277_015:0053b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承檀越疏命住持。",
        "from": "X65n1277_015:0053b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖云時有廢興。",
        "from": "X65n1277_015:0053b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可坐觀成敗。",
        "from": "X65n1277_015:0053b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是用辨心竭力。",
        "from": "X65n1277_015:0053b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要圖革故鼎新。",
        "from": "X65n1277_015:0053b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰抽衣鉢之資。",
        "from": "X65n1277_015:0053b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣辦木材之用。",
        "from": "X65n1277_015:0053b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳩集工匠重立道場。",
        "from": "X65n1277_015:0053b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修法堂而九架五間。",
        "from": "X65n1277_015:0053c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剏寢室而七間五架。",
        "from": "X65n1277_015:0053c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦至三門之鼎建。",
        "from": "X65n1277_015:0053c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又令兩廊之復新。",
        "from": "X65n1277_015:0053c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裝塑殿中佛像七十三尊。",
        "from": "X65n1277_015:0053c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彩繪壁間聖容八十四位。",
        "from": "X65n1277_015:0053c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置應緣四十九軸之功德。",
        "from": "X65n1277_015:0053c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標大藏一十二部之真詮。",
        "from": "X65n1277_015:0053c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造器皿以待往來。",
        "from": "X65n1277_015:0053c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "栽花果以呈供養。",
        "from": "X65n1277_015:0053c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "架橋結路鑿井開池。",
        "from": "X65n1277_015:0053c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增置稅根六伯有餘。",
        "from": "X65n1277_015:0053c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永充常住萬年無毀。",
        "from": "X65n1277_015:0053c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所費三千餘貫。",
        "from": "X65n1277_015:0053c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初非眾力贊成。",
        "from": "X65n1277_015:0053c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸獲畢工庸伸慶懺。",
        "from": "X65n1277_015:0053c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命同袍建水陸冥陽二會。",
        "from": "X65n1277_015:0053c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設大齋献天地水府萬靈。",
        "from": "X65n1277_015:0053c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集此良因。",
        "from": "X65n1277_015:0053c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少伸素願。",
        "from": "X65n1277_015:0053c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰祝一人有慶萬壽無疆。",
        "from": "X65n1277_015:0053c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官僚之祿位高增。",
        "from": "X65n1277_015:0053c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀越之壽祺延永。",
        "from": "X65n1277_015:0053c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次冀山門益因。",
        "from": "X65n1277_015:0053c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧行常安。",
        "from": "X65n1277_015:0053c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩有同資。",
        "from": "X65n1277_015:0053c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人天炳鑒。",
        "from": "X65n1277_015:0053c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年　月　　　日　　　　　　謹識",
        "from": "X65n1277_015:0053c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高峯龍泉院因師集賢語錄卷之十五(終)",
        "from": "X65n1277_015:0053c15_0",
        "context_with_next_sentence": false
    }
]