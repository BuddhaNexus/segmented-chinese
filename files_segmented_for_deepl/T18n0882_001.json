[
    {
        "source_sentence": "佛說一切如來真實攝大乘現證",
        "from": "T18n0882_001:0341a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧大教王經卷第一",
        "from": "T18n0882_001:0341a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T18n0882_001:0341a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫沙門臣施護等",
        "from": "T18n0882_001:0341a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯",
        "from": "T18n0882_001:0341a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛界大曼拏羅廣大儀軌分第一之一如是我聞。",
        "from": "T18n0882_001:0341a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊大毘盧遮那如來。",
        "from": "T18n0882_001:0341a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足一切如來金剛加持種種最勝三昧邪智。",
        "from": "T18n0882_001:0341a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得一切如來殊勝寶冠三界法王最上灌頂。",
        "from": "T18n0882_001:0341a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切如來一切智智大相應主。",
        "from": "T18n0882_001:0341a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能作一切如來一切智印平等增上種種事業。",
        "from": "T18n0882_001:0341a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能圓滿普盡無餘諸有情界一切意願。",
        "from": "T18n0882_001:0341a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住三世一切身語心金剛大慈悲者。",
        "from": "T18n0882_001:0341a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切如來勸請稱讚。",
        "from": "T18n0882_001:0341a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在色究竟天王宮中。",
        "from": "T18n0882_001:0341a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安處廣大摩尼寶殿。",
        "from": "T18n0882_001:0341a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有眾色珠鬘瓔珞。",
        "from": "T18n0882_001:0341a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈴鐸繒幡間錯垂布。",
        "from": "T18n0882_001:0341a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微風吹擊出和雅音。",
        "from": "T18n0882_001:0341a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半滿月等眾所莊嚴。",
        "from": "T18n0882_001:0341a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與九十九俱胝大菩薩眾俱。",
        "from": "T18n0882_001:0341a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂金剛手菩薩摩訶薩。",
        "from": "T18n0882_001:0341a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩摩訶薩。",
        "from": "T18n0882_001:0341a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏菩薩摩訶薩。",
        "from": "T18n0882_001:0341a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥菩薩摩訶薩。",
        "from": "T18n0882_001:0341a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起平等心轉法輪菩薩摩訶薩。",
        "from": "T18n0882_001:0341a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空庫菩薩摩訶薩。",
        "from": "T18n0882_001:0341a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧諸魔力菩薩摩訶薩。",
        "from": "T18n0882_001:0341a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等菩薩摩訶薩。",
        "from": "T18n0882_001:0341a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為上首。",
        "from": "T18n0882_001:0341a24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有殑伽沙數等諸如來示現彼天。",
        "from": "T18n0882_001:0341a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至遍滿閻浮提中。",
        "from": "T18n0882_001:0341a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如胡麻。",
        "from": "T18n0882_001:0341a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼無量無數諸如來身。",
        "from": "T18n0882_001:0341a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一身中悉現無量無數佛剎。",
        "from": "T18n0882_001:0341a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎還復說此祕密法門。",
        "from": "T18n0882_001:0341a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時世尊大毘盧遮那如來。",
        "from": "T18n0882_001:0341b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來互相涉入故。",
        "from": "T18n0882_001:0341b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等安住一切虛空身語心金剛。",
        "from": "T18n0882_001:0341b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來無邊故。",
        "from": "T18n0882_001:0341b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切金剛界覺悟智大士。",
        "from": "T18n0882_001:0341b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開發一切盡虛空界極微塵量金剛加持出生智藏。",
        "from": "T18n0882_001:0341b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施設大金剛智大灌頂寶。",
        "from": "T18n0882_001:0341b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡一切虛空舒遍真如智。",
        "from": "T18n0882_001:0341b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現成正等覺。",
        "from": "T18n0882_001:0341b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來身自性清淨故。",
        "from": "T18n0882_001:0341b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切法自性清淨。",
        "from": "T18n0882_001:0341b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來不空事業勝所作故。",
        "from": "T18n0882_001:0341b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍一切虛空悉現諸色。",
        "from": "T18n0882_001:0341b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普盡無餘諸有情界。",
        "from": "T18n0882_001:0341b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起善調伏一切勝行。",
        "from": "T18n0882_001:0341b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作一切無等無上種種事業。",
        "from": "T18n0882_001:0341b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是出生一切賢聖所謂。",
        "from": "T18n0882_001:0341b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大菩提堅固大士。",
        "from": "T18n0882_001:0341b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來鉤召三昧。",
        "from": "T18n0882_001:0341b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來愛樂智自在。",
        "from": "T18n0882_001:0341b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來善所作。",
        "from": "T18n0882_001:0341b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大灌頂寶。",
        "from": "T18n0882_001:0341b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來日輪光明。",
        "from": "T18n0882_001:0341b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大摩尼寶幢。",
        "from": "T18n0882_001:0341b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大笑。",
        "from": "T18n0882_001:0341b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大清淨法。",
        "from": "T18n0882_001:0341b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大智慧。",
        "from": "T18n0882_001:0341b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大輪。",
        "from": "T18n0882_001:0341b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來祕密語。",
        "from": "T18n0882_001:0341b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來不空種種事業。",
        "from": "T18n0882_001:0341b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大精進妙堅固鎧。",
        "from": "T18n0882_001:0341b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來遍持護金剛藥叉。",
        "from": "T18n0882_001:0341b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來身語心金剛縛智印。",
        "from": "T18n0882_001:0341b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸賢聖總攝頌曰。",
        "from": "T18n0882_001:0341b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　金剛薩埵普賢尊　　妙不空王金剛王　摩囉謂即金剛愛　　金剛善哉極喜王　聖虛空藏金剛寶　　大妙光曰金剛光　妙寶幢即金剛幢　　大喜笑謂金剛笑　能觀自在金剛法　　妙吉祥智金剛利　諸曼拏羅金剛因　　無言即是金剛語　種種事業金剛業　　精進甲冑金剛護　猛惡吞噉金剛牙　　堅固執持金剛拳　標幟金剛鉤箭喜　　寶日幢幡及大笑　蓮華劍并妙輪語　　羯磨甲冑怖堅持　無始無終常寂靜　　暴惡忿怒大安忍　夜叉羅剎善無畏　　威勢猛惡大富盛　烏摩天主并世主　　堅固勝根大寂默　護世空居與地居　　三世及彼三界等　大種善作眾生益　　一切設嚩宗祖等　生死涅槃常如是　　正所流轉大復大　覺性清淨大乘法　　於三有中常利益　彼降三世寂靜生　　寂靜生主能調伏　堅固主宰妙勝地　　大智波羅蜜多法　一切菩薩解脫門　　一切如來諸勝行　正覺善利諸佛心　　一切菩提無有上　毘盧遮那最勝尊　　自然總持諸正念　摩訶薩埵大智印　　三摩地生佛事業　成就一切諸佛身　　覺悟眾生常利益　彼大根本即大黑　　而大貪染為大樂　諸大方便大勝上　　一切勝宮大自在爾時具德大菩提心普賢大菩薩。",
        "from": "T18n0882_001:0341b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住一切如來心。",
        "from": "T18n0882_001:0341c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時一切如來。",
        "from": "T18n0882_001:0341c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現遍滿此佛剎中。",
        "from": "T18n0882_001:0341c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如胡麻皆悉雲集。",
        "from": "T18n0882_001:0341c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣一切義成菩薩坐菩提場所。",
        "from": "T18n0882_001:0341c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為示現受用身。",
        "from": "T18n0882_001:0341c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告彼菩薩言。",
        "from": "T18n0882_001:0341c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若不能知一切如來真實智忍諸難行行。",
        "from": "T18n0882_001:0341c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何證得阿耨多羅三藐三菩提。",
        "from": "T18n0882_001:0341c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故汝今於此應起勇悍之意。",
        "from": "T18n0882_001:0341c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成所作故。",
        "from": "T18n0882_001:0341c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切義成菩薩摩訶薩。",
        "from": "T18n0882_001:0341c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由諸如來為警覺已。",
        "from": "T18n0882_001:0341c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從阿娑頗那迦三摩地起。",
        "from": "T18n0882_001:0341c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮一切如來已作是白言。",
        "from": "T18n0882_001:0341c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來願教示我。",
        "from": "T18n0882_001:0341c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何所行云何是真實智忍。",
        "from": "T18n0882_001:0341c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來異口同音。",
        "from": "T18n0882_001:0341c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向彼菩薩咸作是言。",
        "from": "T18n0882_001:0341c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士汝應觀察自心三摩地。",
        "from": "T18n0882_001:0341c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是所行是真實忍。",
        "from": "T18n0882_001:0342a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以自性成就大明。",
        "from": "T18n0882_001:0342a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所樂而誦大明曰。",
        "from": "T18n0882_001:0342a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)唧多鉢囉(二合)底微(引)鄧迦嚕(引)彌(一句)時彼菩薩白諸如來言。",
        "from": "T18n0882_001:0342a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以世尊一切如來教示我故。",
        "from": "T18n0882_001:0342a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見自心淨月輪相。",
        "from": "T18n0882_001:0342a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如來言。",
        "from": "T18n0882_001:0342a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子心自性光明猶如遍修功行。",
        "from": "T18n0882_001:0342a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨作隨成。",
        "from": "T18n0882_001:0342a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如白衣易成染色。",
        "from": "T18n0882_001:0342a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切如來。",
        "from": "T18n0882_001:0342a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自性光明心智豐盛成所作故為彼菩薩。",
        "from": "T18n0882_001:0342a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說大明曰。",
        "from": "T18n0882_001:0342a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)冒(引)地唧多母怛波(二合引)捺夜(引)彌(一句)即以如是自性成就大明。",
        "from": "T18n0882_001:0342a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令發起大菩提心。",
        "from": "T18n0882_001:0342a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼菩薩得諸如來教示發菩提心已。",
        "from": "T18n0882_001:0342a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白諸如來言。",
        "from": "T18n0882_001:0342a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來如其所有淨月輪相。",
        "from": "T18n0882_001:0342a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦如是得見自心淨月輪相。",
        "from": "T18n0882_001:0342a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如來言。",
        "from": "T18n0882_001:0342a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來心從普賢心生。",
        "from": "T18n0882_001:0342a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊等堅固如善所行。",
        "from": "T18n0882_001:0342a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來自普賢心。",
        "from": "T18n0882_001:0342a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生堅固成所作因。",
        "from": "T18n0882_001:0342a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於自心淨月輪中思惟金剛相。",
        "from": "T18n0882_001:0342a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是大明曰。",
        "from": "T18n0882_001:0342a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)底瑟姹(二合)嚩日囉(二合一句)時彼菩薩白諸如來言。",
        "from": "T18n0882_001:0342a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來我已得見淨月輪中妙金剛相。",
        "from": "T18n0882_001:0342a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如來言。",
        "from": "T18n0882_001:0342a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝堅固此一切如來大普賢心真實金剛。",
        "from": "T18n0882_001:0342a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是大明曰。",
        "from": "T18n0882_001:0342a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合引)怛摩(二合)酤(引)[亢*欠](呼郎切下同一句)是時遍一切虛空界。",
        "from": "T18n0882_001:0342a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相涉入一切如來身語心大金剛界。",
        "from": "T18n0882_001:0342a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來加持力。",
        "from": "T18n0882_001:0342a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "混入薩埵金剛中。",
        "from": "T18n0882_001:0342a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來乃為具德一切義成大菩薩。",
        "from": "T18n0882_001:0342a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立祕密名號金剛界。",
        "from": "T18n0882_001:0342a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以金剛大灌頂法而為灌頂。",
        "from": "T18n0882_001:0342a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛界大菩薩白諸如來言。",
        "from": "T18n0882_001:0342b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來我見一切如來身即是己身。",
        "from": "T18n0882_001:0342b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如來言。",
        "from": "T18n0882_001:0342b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士薩埵金剛諸相具足。",
        "from": "T18n0882_001:0342b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理應觀諸佛影像。",
        "from": "T18n0882_001:0342b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以如是自性成就大明。",
        "from": "T18n0882_001:0342b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所樂而誦大明曰。",
        "from": "T18n0882_001:0342b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)野他(引)薩哩嚩(二合)怛他(引)誐多(引一句)薩怛(二合)他(引)[亢*欠](二句)時諸如來如是說已。",
        "from": "T18n0882_001:0342b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼金剛界大菩薩。",
        "from": "T18n0882_001:0342b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來身即是己身。",
        "from": "T18n0882_001:0342b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將成正覺。",
        "from": "T18n0882_001:0342b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向一切如來遍頂禮已。",
        "from": "T18n0882_001:0342b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是白言。",
        "from": "T18n0882_001:0342b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊一切如來加持於我。",
        "from": "T18n0882_001:0342b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所現成正等正覺。",
        "from": "T18n0882_001:0342b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得堅固一切所作。",
        "from": "T18n0882_001:0342b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來即入金剛界如來薩埵金剛中。",
        "from": "T18n0882_001:0342b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時具德金剛界大菩薩。",
        "from": "T18n0882_001:0342b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於剎那中以一切如來平等智。",
        "from": "T18n0882_001:0342b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現成正覺已。",
        "from": "T18n0882_001:0342b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入一切如來金剛平等最上智印祕密三昧。",
        "from": "T18n0882_001:0342b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現證一切如來法平等智自性清淨。",
        "from": "T18n0882_001:0342b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切如來一切平等自性光明智。",
        "from": "T18n0882_001:0342b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故成滿如來應供正等正覺。",
        "from": "T18n0882_001:0342b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來即從一切如來薩埵金剛中出。",
        "from": "T18n0882_001:0342b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持虛空藏大摩尼寶。",
        "from": "T18n0882_001:0342b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為作灌頂。",
        "from": "T18n0882_001:0342b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從觀自在法智。",
        "from": "T18n0882_001:0342b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發生一切如來種種事業。",
        "from": "T18n0882_001:0342b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善安立已。",
        "from": "T18n0882_001:0342b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸詣須彌山頂金剛摩尼寶峯樓閣中。",
        "from": "T18n0882_001:0342b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時金剛界如來。",
        "from": "T18n0882_001:0342b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切如來所加持已。",
        "from": "T18n0882_001:0342b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來師子座中。",
        "from": "T18n0882_001:0342b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸方面如理安住。",
        "from": "T18n0882_001:0342b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時阿閦如來。",
        "from": "T18n0882_001:0342b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶生如來。",
        "from": "T18n0882_001:0342b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在王如來。",
        "from": "T18n0882_001:0342b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空成就如來。",
        "from": "T18n0882_001:0342b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸如來。",
        "from": "T18n0882_001:0342b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以世尊釋迦牟尼如來。",
        "from": "T18n0882_001:0342b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成一切如來所加持身。",
        "from": "T18n0882_001:0342b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切平等善通達故。",
        "from": "T18n0882_001:0342b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向一切方普遍觀察。",
        "from": "T18n0882_001:0342b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其四方隨方而坐。",
        "from": "T18n0882_001:0342b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0882_001:0342b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來普賢心證覺未久已。",
        "from": "T18n0882_001:0342b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受一切如來虛空所生大摩尼寶最上灌頂已。",
        "from": "T18n0882_001:0342c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "待一切如來觀自在法智最上波羅蜜多已。",
        "from": "T18n0882_001:0342c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來種種事業不空無礙教中。",
        "from": "T18n0882_001:0342c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿所作圓滿意樂。",
        "from": "T18n0882_001:0342c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切如來自身加持故。",
        "from": "T18n0882_001:0342c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入一切如來普賢大菩薩三昧。",
        "from": "T18n0882_001:0342c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生薩埵加持金剛三摩地。",
        "from": "T18n0882_001:0342c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名一切如來大乘現證三昧。",
        "from": "T18n0882_001:0342c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切如來心。",
        "from": "T18n0882_001:0342c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心出。",
        "from": "T18n0882_001:0342c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是大明曰。",
        "from": "T18n0882_001:0342c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)薩埵(一句)",
        "from": "T18n0882_001:0342c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔出一切如來心時。",
        "from": "T18n0882_001:0342c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼如是具德普賢大菩薩。",
        "from": "T18n0882_001:0342c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成眾多月輪同時出現。",
        "from": "T18n0882_001:0342c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普淨一切有情大菩提心已。",
        "from": "T18n0882_001:0342c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來周匝而住。",
        "from": "T18n0882_001:0342c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸月輪。",
        "from": "T18n0882_001:0342c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一切如來智金剛出。",
        "from": "T18n0882_001:0342c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入世尊大毘盧遮那如來心。",
        "from": "T18n0882_001:0342c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以普賢性妙堅牢故。",
        "from": "T18n0882_001:0342c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住金剛薩埵三摩地。",
        "from": "T18n0882_001:0342c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來所加持故。",
        "from": "T18n0882_001:0342c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "T18n0882_001:0342c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成五峯光明鬘。",
        "from": "T18n0882_001:0342c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界周遍為量。",
        "from": "T18n0882_001:0342c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中出現一切如來身語心金剛所成金剛杵相。",
        "from": "T18n0882_001:0342c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是相從一切如來心出已。",
        "from": "T18n0882_001:0342c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛掌中。",
        "from": "T18n0882_001:0342c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後復從金剛杵中。",
        "from": "T18n0882_001:0342c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現金剛相淨妙光明。",
        "from": "T18n0882_001:0342c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有種種殊勝色相。",
        "from": "T18n0882_001:0342c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍照耀一切世界。",
        "from": "T18n0882_001:0342c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復從金剛光明門。",
        "from": "T18n0882_001:0342c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出現一切世界極微塵量等如來像。",
        "from": "T18n0882_001:0342c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿法界互相涉入。",
        "from": "T18n0882_001:0342c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟一切盡虛空界。",
        "from": "T18n0882_001:0342c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍一切世界雲海。",
        "from": "T18n0882_001:0342c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足一切如來平等智通。",
        "from": "T18n0882_001:0342c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發生一切如來大菩提心。",
        "from": "T18n0882_001:0342c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成辦普賢種種勝行。",
        "from": "T18n0882_001:0342c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承事一切如來。",
        "from": "T18n0882_001:0342c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往菩提場摧諸魔軍。",
        "from": "T18n0882_001:0342c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證成一切如來平等無上大菩提果。",
        "from": "T18n0882_001:0342c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉正法輪。",
        "from": "T18n0882_001:0342c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於普盡無餘諸有情界。",
        "from": "T18n0882_001:0342c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作一切拔濟利樂。",
        "from": "T18n0882_001:0342c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切如來三昧智通最上悉地。",
        "from": "T18n0882_001:0342c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現一切如來神通游戲。",
        "from": "T18n0882_001:0342c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以普賢性於金剛薩埵三摩地妙堅牢故。",
        "from": "T18n0882_001:0342c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "T18n0882_001:0343a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是出生普賢大菩薩身。",
        "from": "T18n0882_001:0343a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住世尊大毘盧遮那如來。",
        "from": "T18n0882_001:0343a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心說此頌曰。",
        "from": "T18n0882_001:0343a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大哉清淨我普賢　　堅固薩埵自然生　由彼堅固本無身　　金剛薩埵身出現爾時普賢大菩薩身。",
        "from": "T18n0882_001:0343a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世尊心下。",
        "from": "T18n0882_001:0343a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來前月輪中。",
        "from": "T18n0882_001:0343a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理而住復請教示。",
        "from": "T18n0882_001:0343a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即入一切如來智三昧金剛三摩地。",
        "from": "T18n0882_001:0343a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受用一切如來戒定慧解脫解脫知見。",
        "from": "T18n0882_001:0343a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從大智方便大精進力。",
        "from": "T18n0882_001:0343a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大智三昧。",
        "from": "T18n0882_001:0343a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉妙法輪。",
        "from": "T18n0882_001:0343a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣為一切普盡無餘諸有情界。",
        "from": "T18n0882_001:0343a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔濟利益。",
        "from": "T18n0882_001:0343a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切主宰普令獲得適悅快樂。",
        "from": "T18n0882_001:0343a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得一切如來平等智通最上大乘現證三昧殊勝悉地等。",
        "from": "T18n0882_001:0343a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以一切如來成就金剛杵。",
        "from": "T18n0882_001:0343a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授與一切如來大轉輪王一切佛身寶冠繒帛所灌頂者普賢大菩薩雙手掌中。",
        "from": "T18n0882_001:0343a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後一切如來。",
        "from": "T18n0882_001:0343a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為立名號金剛手。",
        "from": "T18n0882_001:0343a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛手灌頂法而為灌頂。",
        "from": "T18n0882_001:0343a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩現高舉相。",
        "from": "T18n0882_001:0343a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手戲擲彼金剛杵。",
        "from": "T18n0882_001:0343a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安自心間作勇進勢。",
        "from": "T18n0882_001:0343a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此頌曰。",
        "from": "T18n0882_001:0343a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此是一切大覺尊　　成就無上金剛杵　今得授於我掌中　　金剛中住金剛相爾時世尊。",
        "from": "T18n0882_001:0343a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復入不空王大菩薩三昧。",
        "from": "T18n0882_001:0343a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生薩埵加待金剛三摩地。",
        "from": "T18n0882_001:0343a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名一切如來鉤召三昧。",
        "from": "T18n0882_001:0343a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切如來心。",
        "from": "T18n0882_001:0343a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心出說是大明曰。",
        "from": "T18n0882_001:0343a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)囉(引)惹(一句)纔出一切如來心時。",
        "from": "T18n0882_001:0343a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼如是具德金剛手菩薩。",
        "from": "T18n0882_001:0343a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃成一切如來大金剛鉤。",
        "from": "T18n0882_001:0343a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為出現已。",
        "from": "T18n0882_001:0343a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入世尊大毘盧遮那如來心。",
        "from": "T18n0882_001:0343a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "T18n0882_001:0343a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是出現大金剛鉤相。",
        "from": "T18n0882_001:0343a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛掌中。",
        "from": "T18n0882_001:0343a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後從彼金剛鉤相中。",
        "from": "T18n0882_001:0343a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出現一切世界極微塵量等如來像。",
        "from": "T18n0882_001:0343a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作一切如來請召等事。",
        "from": "T18n0882_001:0343b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切世界。",
        "from": "T18n0882_001:0343b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施設諸佛神通游戲已。",
        "from": "T18n0882_001:0343b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼不空王性。",
        "from": "T18n0882_001:0343b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛薩埵三摩地。",
        "from": "T18n0882_001:0343b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙堅牢故合為一體。",
        "from": "T18n0882_001:0343b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生不空王大菩薩身。",
        "from": "T18n0882_001:0343b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於世尊大毘盧遮那如來心說。",
        "from": "T18n0882_001:0343b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此頌曰。",
        "from": "T18n0882_001:0343b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大哉我此不空王　　金剛出生金剛鉤　普遍觀察一切佛　　平等悉召作成就是時不空王大菩薩身。",
        "from": "T18n0882_001:0343b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世尊心下。",
        "from": "T18n0882_001:0343b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來右月輪中。",
        "from": "T18n0882_001:0343b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理而住復請教示。",
        "from": "T18n0882_001:0343b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T18n0882_001:0343b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入一切如來請召三昧金剛三摩地。",
        "from": "T18n0882_001:0343b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是一切如來請召三昧。",
        "from": "T18n0882_001:0343b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於普盡無餘諸有情界。",
        "from": "T18n0882_001:0343b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍鉤召為作利益。",
        "from": "T18n0882_001:0343b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令獲得適悅快樂。",
        "from": "T18n0882_001:0343b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至令得一切如來集會加持最上悉地。",
        "from": "T18n0882_001:0343b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後以彼大金剛鉤。",
        "from": "T18n0882_001:0343b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授與不空王大菩薩雙手掌中。",
        "from": "T18n0882_001:0343b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來。",
        "from": "T18n0882_001:0343b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為立名號金剛鉤。",
        "from": "T18n0882_001:0343b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛鉤灌頂法而為灌頂。",
        "from": "T18n0882_001:0343b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛鉤菩薩摩訶薩。",
        "from": "T18n0882_001:0343b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以所授大金剛鉤。",
        "from": "T18n0882_001:0343b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普召一切如來。",
        "from": "T18n0882_001:0343b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此頌曰。",
        "from": "T18n0882_001:0343b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此是一切大覺尊　　最勝無上金剛智　所有諸佛成就事　　最上悉地皆能召",
        "from": "T18n0882_001:0343b19_0",
        "context_with_next_sentence": false
    }
]