[
    {
        "source_sentence": "盂蘭盆經者。",
        "from": "X21n0374_001:0508a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃大目犍連。",
        "from": "X21n0374_001:0508a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解母青提夫人倒懸之苦。",
        "from": "X21n0374_001:0508a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張孝道之宗本。",
        "from": "X21n0374_001:0508a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故請如來演說斯經。",
        "from": "X21n0374_001:0508a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利及一切。",
        "from": "X21n0374_001:0508a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以報父母劬勞之恩也。",
        "from": "X21n0374_001:0508a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而吾佛世尊。",
        "from": "X21n0374_001:0508a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累三大劫。",
        "from": "X21n0374_001:0508a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備脩孝行。",
        "from": "X21n0374_001:0508a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存者罄誠以奉。",
        "from": "X21n0374_001:0508a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸發道意。",
        "from": "X21n0374_001:0508a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡者資以妙行。",
        "from": "X21n0374_001:0508a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔濟沈溺。",
        "from": "X21n0374_001:0508a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生人天。",
        "from": "X21n0374_001:0508a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞法證悟。",
        "from": "X21n0374_001:0508a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離苦趣。",
        "from": "X21n0374_001:0508a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報罔極之恩。",
        "from": "X21n0374_001:0508a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匪唯一生父母。",
        "from": "X21n0374_001:0508a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無量生父母。",
        "from": "X21n0374_001:0508a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六親眷屬。",
        "from": "X21n0374_001:0508a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆報之。",
        "from": "X21n0374_001:0508a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故謂之大孝釋迦尊也。",
        "from": "X21n0374_001:0508a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行世間之孝者。",
        "from": "X21n0374_001:0508a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但能溫凊甘[漣-車+隋]之奉。",
        "from": "X21n0374_001:0508a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎護髮膚。",
        "from": "X21n0374_001:0508a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立身揚名。",
        "from": "X21n0374_001:0508a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不虧其體。",
        "from": "X21n0374_001:0508a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不辱其身。",
        "from": "X21n0374_001:0508a11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其孝至矣。",
        "from": "X21n0374_001:0508a11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行出世之孝者。",
        "from": "X21n0374_001:0508a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "割愛辭親。",
        "from": "X21n0374_001:0508a12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學佛之行。",
        "from": "X21n0374_001:0508a12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法資現世。",
        "from": "X21n0374_001:0508a12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薦彼亡歿。",
        "from": "X21n0374_001:0508a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普利含識。",
        "from": "X21n0374_001:0508a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨親平等。",
        "from": "X21n0374_001:0508a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儒釋之行不同。",
        "from": "X21n0374_001:0508a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其行孝之心一也。",
        "from": "X21n0374_001:0508a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐圭峯禪師製疏一卷。",
        "from": "X21n0374_001:0508a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以釋經之大義。",
        "from": "X21n0374_001:0508a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂範後人。",
        "from": "X21n0374_001:0508a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資酬罔極。",
        "from": "X21n0374_001:0508a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋廣演大師遇榮。",
        "from": "X21n0374_001:0508a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發明疏義。",
        "from": "X21n0374_001:0508a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多含廣引儒宗。",
        "from": "X21n0374_001:0508a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝行彰的之事。",
        "from": "X21n0374_001:0508a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會孝道之一貫。",
        "from": "X21n0374_001:0508a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文成二卷。",
        "from": "X21n0374_001:0508a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目曰孝衡鈔。",
        "from": "X21n0374_001:0508a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復纂科文一卷。",
        "from": "X21n0374_001:0508a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提其綱要。",
        "from": "X21n0374_001:0508a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然因經以知目連起教之由。",
        "from": "X21n0374_001:0508a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因疏以能釋經大義。",
        "from": "X21n0374_001:0508a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因鈔以申釋疏文之詳。",
        "from": "X21n0374_001:0508a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其孝行之道。",
        "from": "X21n0374_001:0508a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燦然具備焉。",
        "from": "X21n0374_001:0508a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時宣德己酉春二月僧錄司右講經兼大報恩寺住持沙門　一真叟唯實盂蘭盆經疏鈔。",
        "from": "X21n0374_001:0508a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舊本梵夾。",
        "from": "X21n0374_001:0508b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經疏共一卷。",
        "from": "X21n0374_001:0508b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈔兩卷。",
        "from": "X21n0374_001:0508b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "科一卷。",
        "from": "X21n0374_001:0508b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇式一卷。",
        "from": "X21n0374_001:0508b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總為五卷。",
        "from": "X21n0374_001:0508b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今將鈔會入經疏之下分作兩卷。",
        "from": "X21n0374_001:0508b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "科式共一卷。",
        "from": "X21n0374_001:0508b06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書為方冊鏤梓。",
        "from": "X21n0374_001:0508b06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡遇高頭是經。",
        "from": "X21n0374_001:0508b06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平頭是疏與鈔。",
        "from": "X21n0374_001:0508b07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "單題是經。",
        "from": "X21n0374_001:0508b07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "科三角是疏科。",
        "from": "X21n0374_001:0508b07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中又有圓圈。",
        "from": "X21n0374_001:0508b07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃鈔主自立主意。",
        "from": "X21n0374_001:0508b08_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不隨疏轉者也。",
        "from": "X21n0374_001:0508b08_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖排布點校如此。",
        "from": "X21n0374_001:0508b08_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閒有力不及處。",
        "from": "X21n0374_001:0508b09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博古君子參悉之。",
        "from": "X21n0374_001:0508b09_35",
        "context_with_next_sentence": true
    },
