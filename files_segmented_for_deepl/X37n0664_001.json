[
    {
        "source_sentence": " 南本大般涅槃經會疏敘",
        "from": "X37n0664_001:0628c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫大般涅槃經者。",
        "from": "X37n0664_001:0628c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃如來顧命之言也。",
        "from": "X37n0664_001:0628c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊成矌劫而久祕不談。",
        "from": "X37n0664_001:0628c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便調機而待時方說。",
        "from": "X37n0664_001:0628c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以小大對帶半滿開宗。",
        "from": "X37n0664_001:0628c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓漸偏圓初中後唱。",
        "from": "X37n0664_001:0628c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟此奧旨最後極談。",
        "from": "X37n0664_001:0628c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其由庫內之珍財臨終始付。",
        "from": "X37n0664_001:0628c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海中之神寶劫盡乃亡。",
        "from": "X37n0664_001:0628c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大哉世尊。",
        "from": "X37n0664_001:0628c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲莫並。",
        "from": "X37n0664_001:0628c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精求竭力。",
        "from": "X37n0664_001:0628c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等救沉淪。",
        "from": "X37n0664_001:0628c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伺機四十九年。",
        "from": "X37n0664_001:0628c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本懷未罄。",
        "from": "X37n0664_001:0628c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱滅二月十五。",
        "from": "X37n0664_001:0628c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡吐肝腸。",
        "from": "X37n0664_001:0628c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得十外歸依闡提亦悟。",
        "from": "X37n0664_001:0628c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昆蟲草木悉已沾恩。",
        "from": "X37n0664_001:0628c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象馬蛇虺咸皆被澤。",
        "from": "X37n0664_001:0628c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內凡外凡而功超曠劫。",
        "from": "X37n0664_001:0628c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天類人類而果證無生。",
        "from": "X37n0664_001:0628c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能事既畢即告涅槃。",
        "from": "X37n0664_001:0628c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是日月無光而山林變白。",
        "from": "X37n0664_001:0628c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地震動而鳥獸哀鳴。",
        "from": "X37n0664_001:0628c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是凡是聖盡失所天。",
        "from": "X37n0664_001:0628c14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情與無情誰非號慕。",
        "from": "X37n0664_001:0628c14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知此經一唱無復遺餘。",
        "from": "X37n0664_001:0628c15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至矣盡矣。",
        "from": "X37n0664_001:0628c15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他莫能尚。",
        "from": "X37n0664_001:0628c15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舊經四十卷譯拙辭繁。",
        "from": "X37n0664_001:0628c16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈運削成言簡理直。",
        "from": "X37n0664_001:0628c16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開宗判教五七八家。",
        "from": "X37n0664_001:0628c16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂精詳互存得失。",
        "from": "X37n0664_001:0628c17_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是重參至理註此玄文。",
        "from": "X37n0664_001:0628c17_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜乎陳隋兵亂疏未入經。",
        "from": "X37n0664_001:0628c18_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼此分張勢同吳越。",
        "from": "X37n0664_001:0628c18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復藏中久匿。",
        "from": "X37n0664_001:0628c19_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者尠窺。",
        "from": "X37n0664_001:0628c19_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末世澆漓盡疲至道。",
        "from": "X37n0664_001:0628c19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致使法眼朦垢佛日沉埋。",
        "from": "X37n0664_001:0628c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀哉痛哉。",
        "from": "X37n0664_001:0628c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實傷心腑。",
        "from": "X37n0664_001:0628c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故予不揣愚庸而輒敢効顰。",
        "from": "X37n0664_001:0628c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲會此經而發心有日。",
        "from": "X37n0664_001:0628c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再三披閱宗趣粗知。",
        "from": "X37n0664_001:0628c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何旨奧文深。",
        "from": "X37n0664_001:0628c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有倣郭象。",
        "from": "X37n0664_001:0628c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錯綜前後多苦亡羊。",
        "from": "X37n0664_001:0628c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是不懼闡提之罪。",
        "from": "X37n0664_001:0628c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘負謗法之愆。",
        "from": "X37n0664_001:0628c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "削繁錄實。",
        "from": "X37n0664_001:0628c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貴在貫通。",
        "from": "X37n0664_001:0628c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪歟福歟。",
        "from": "X37n0664_001:0628c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並伸懺悔。",
        "from": "X37n0664_001:0628c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時",
        "from": "X37n0664_001:0629a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇明萬曆歲次辛亥如來誕生日",
        "from": "X37n0664_001:0629a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南本大般涅槃經五分圖",
        "from": "X37n0664_001:0629a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　品題總目",
        "from": "X37n0664_001:0629a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△初召請涅槃眾",
        "from": "X37n0664_001:0629a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序品第一　卷(之一)",
        "from": "X37n0664_001:0629a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二開演涅槃施",
        "from": "X37n0664_001:0629a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純陀品第二(此品施常住五果對此土雜眾)　卷(之二)哀歎品第三(此品施勝三修對此土聲聞眾)長壽品第四(此品訖大眾問品隨問而施對此土菩薩眾)　卷(之三)金剛身品第五名字功德品第六四相品第七　卷(四之五)四依品第八　卷(之六)邪正品第九　卷(之七)四諦品第十四倒品第十一如來性品第十二　卷(之八)文字品第十三鳥喻品第十四月喻品第十五　卷(之九)菩薩品第十六大眾所問品第十七　卷(之十)△三示現涅槃行現病品第十八聖行品第十九　卷(十一之十三)梵行品第二十(此品末指雜華經明天行)　卷(十四之十八)嬰兒行品第二十一高貴德王品第二十二　卷(十九之二十四)△四問答涅槃義獅子吼品第二十三　卷(二十五之三十)△五折攝涅槃用迦葉菩薩品第二十四　卷(三十一之三十四)憍陳如品第二十五　卷(三十五之三十六)又四品半後時所至文分為二。",
        "from": "X37n0664_001:0629a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○初折惡攝邪用",
        "from": "X37n0664_001:0629b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳如品末至遺教還源二品半",
        "from": "X37n0664_001:0629b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○二化周掩迹用",
        "from": "X37n0664_001:0629b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茶毗品至廓潤品",
        "from": "X37n0664_001:0629b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南本大般涅槃經會疏解卷第一",
        "from": "X37n0664_001:0629c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北天竺三藏法師曇無讖奉　詔譯",
        "from": "X37n0664_001:0629c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉沙門慧嚴慧觀同謝靈運重治",
        "from": "X37n0664_001:0629c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋灌頂法師疏　高足湛然再治",
        "from": "X37n0664_001:0629c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元傳天台教崇聖院沙門師正分科",
        "from": "X37n0664_001:0629c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明會稽後學沙門湛然圓澄會疏註",
        "from": "X37n0664_001:0629c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉善沈豫昌　仁和張　顯同校",
        "from": "X37n0664_001:0629c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卍云。",
        "from": "X37n0664_001:0629c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此會疏解與大日本續藏經第五十六七套所收重訂交科本無大差。",
        "from": "X37n0664_001:0629c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍單錄序跋而已。",
        "from": "X37n0664_001:0629c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今北本已具有四品半。",
        "from": "X37n0664_001:0629c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂是後分陳如末品具載須跋然身報本之意。",
        "from": "X37n0664_001:0629c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有遺教品還源品茶毗品廓潤品。",
        "from": "X37n0664_001:0629c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與居士請僧經品目不同。",
        "from": "X37n0664_001:0629c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意實一貫也。",
        "from": "X37n0664_001:0629c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(澄)不揣己德。",
        "from": "X37n0664_001:0629c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄意會入。",
        "from": "X37n0664_001:0629c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倘有悞脫之謬。",
        "from": "X37n0664_001:0629c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三寶慈悲懺悔。",
        "from": "X37n0664_001:0629c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將此微因。",
        "from": "X37n0664_001:0629c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上祝聖皇福壽萬延。",
        "from": "X37n0664_001:0629c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下禱黎民菩提共證。",
        "from": "X37n0664_001:0629c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生藉此為法船。",
        "from": "X37n0664_001:0629c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不登覺岸誓不捨離。",
        "from": "X37n0664_001:0629c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世持以為寶鑑。",
        "from": "X37n0664_001:0629c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未出魔罥。",
        "from": "X37n0664_001:0629c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願長相保。",
        "from": "X37n0664_001:0629c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現生父母與曠劫父母同悟一乘之佛性。",
        "from": "X37n0664_001:0629c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積生冤親及法界冤親共持六念。",
        "from": "X37n0664_001:0630a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以勳修五行。",
        "from": "X37n0664_001:0630a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅持十德。",
        "from": "X37n0664_001:0630a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓備眾生界盡。",
        "from": "X37n0664_001:0630a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方取菩提。",
        "from": "X37n0664_001:0630a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄未空。",
        "from": "X37n0664_001:0630a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓不成佛。",
        "from": "X37n0664_001:0630a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘圓澄廣山真密明宗通達清朗",
        "from": "X37n0664_001:0630a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會首沈豫昌葉明琪張顯成廣易沈大雲盧明淳朱廣蕃沈明潮俞明濡沈明瀚信女大霽杭州鄒門信女廣奇洎眾姓等。",
        "from": "X37n0664_001:0630a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心刊此大涅槃經疏一部。",
        "from": "X37n0664_001:0630a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願在會眾等。",
        "from": "X37n0664_001:0630a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承此功德。",
        "from": "X37n0664_001:0630a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積生父母各途超昇。",
        "from": "X37n0664_001:0630a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫冤親俱蒙解脫。",
        "from": "X37n0664_001:0630a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大涅槃日爍破昏衢。",
        "from": "X37n0664_001:0630a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秘密義天普含法界。",
        "from": "X37n0664_001:0630a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六念三修世世熏聞。",
        "from": "X37n0664_001:0630a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五行十德在在成就。",
        "from": "X37n0664_001:0630a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共證圓滿菩提。",
        "from": "X37n0664_001:0630a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各受最後付囑。",
        "from": "X37n0664_001:0630a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍華三會初會相逢淨土九品上品授記者。",
        "from": "X37n0664_001:0630a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹疏。",
        "from": "X37n0664_001:0630a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉廣盤呂鳴治吳孝延嚴大參沈國彥沈憲朱常新胡奕訓沈兆槐曾慶芳沈受祉沈受祺壬寅中秋。",
        "from": "X37n0664_001:0630a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "湛大師自會稽過。",
        "from": "X37n0664_001:0630b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訪見予。",
        "from": "X37n0664_001:0630b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案頭有南藏涅槃經疏。",
        "from": "X37n0664_001:0630b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰居士從何處得來。",
        "from": "X37n0664_001:0630b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予曰。",
        "from": "X37n0664_001:0630b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從殘書中檢出。",
        "from": "X37n0664_001:0630b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃先世所遺。",
        "from": "X37n0664_001:0630b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師喟然嘆曰。",
        "from": "X37n0664_001:0630b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此疏昔灌頂老人當隋陳之亂。",
        "from": "X37n0664_001:0630b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拾糊窓紙錄疏。",
        "from": "X37n0664_001:0630b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "艱辛萬狀。",
        "from": "X37n0664_001:0630b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上首湛然欲會經而不遂。",
        "from": "X37n0664_001:0630b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "埋却藏中幾千年。",
        "from": "X37n0664_001:0630b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者罕得寓目。",
        "from": "X37n0664_001:0630b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我將分疏會入經文。",
        "from": "X37n0664_001:0630b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有願而未逮。",
        "from": "X37n0664_001:0630b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如果居士為我流通。",
        "from": "X37n0664_001:0630b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予唯唯。",
        "from": "X37n0664_001:0630b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越十有三載。",
        "from": "X37n0664_001:0630b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乙卯孟冬。",
        "from": "X37n0664_001:0630b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師來我郡。",
        "from": "X37n0664_001:0630b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法於福城東塔。",
        "from": "X37n0664_001:0630b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暇日相見於麟水之濵。",
        "from": "X37n0664_001:0630b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X37n0664_001:0630b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃疏會成矣。",
        "from": "X37n0664_001:0630b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出稿相示。",
        "from": "X37n0664_001:0630b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且云。",
        "from": "X37n0664_001:0630b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幾為病魔所沮。",
        "from": "X37n0664_001:0630b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛悲哀者累日。",
        "from": "X37n0664_001:0630b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願延殘喘。",
        "from": "X37n0664_001:0630b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以畢此願。",
        "from": "X37n0664_001:0630b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡何病愈。",
        "from": "X37n0664_001:0630b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣延書家。",
        "from": "X37n0664_001:0630b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚膏繼晷。",
        "from": "X37n0664_001:0630b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又數月而始成。",
        "from": "X37n0664_001:0630b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士不忘前諾乎。",
        "from": "X37n0664_001:0630b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予曰。",
        "from": "X37n0664_001:0630b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古德未了之案。",
        "from": "X37n0664_001:0630b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得師不惜身命。",
        "from": "X37n0664_001:0630b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以利樂有情。",
        "from": "X37n0664_001:0630b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢食前諾。",
        "from": "X37n0664_001:0630b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂於臘月八日。",
        "from": "X37n0664_001:0630b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紏工授梓。",
        "from": "X37n0664_001:0630b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸賴同志。",
        "from": "X37n0664_001:0630b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂助竣事。",
        "from": "X37n0664_001:0630b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於丁巳秋。",
        "from": "X37n0664_001:0630b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹識其緣起歲月云爾。",
        "from": "X37n0664_001:0630b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丁巳孟冬朔日武塘沈豫昌識琪本名祺胤。",
        "from": "X37n0664_001:0630b17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自幼知崇三寶。",
        "from": "X37n0664_001:0630c04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丁巳春。",
        "from": "X37n0664_001:0630c04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會湛大師講楞嚴經於福城東塔。",
        "from": "X37n0664_001:0630c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日往聽焉。",
        "from": "X37n0664_001:0630c05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂皈依大師。",
        "from": "X37n0664_001:0630c05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得錫今法名。",
        "from": "X37n0664_001:0630c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先是涅槃會疏付刻流通。",
        "from": "X37n0664_001:0630c06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功繁貲儉。",
        "from": "X37n0664_001:0630c06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師甚憂之。",
        "from": "X37n0664_001:0630c06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琪遂有幹蠱之思。",
        "from": "X37n0664_001:0630c06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺悲淚。",
        "from": "X37n0664_001:0630c07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夕得一夢。",
        "from": "X37n0664_001:0630c07_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢大師上堂前設一大浴槃。",
        "from": "X37n0664_001:0630c07_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師體沾泥。",
        "from": "X37n0664_001:0630c08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從槃沐浴而出。",
        "from": "X37n0664_001:0630c08_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭長躍尺。",
        "from": "X37n0664_001:0630c08_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琪自視兩足沾泥。",
        "from": "X37n0664_001:0630c09_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第亦入浴。",
        "from": "X37n0664_001:0630c09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便覺。",
        "from": "X37n0664_001:0630c09_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺而占之。",
        "from": "X37n0664_001:0630c09_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數然自喜曰。",
        "from": "X37n0664_001:0630c09_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜來所夢分明。",
        "from": "X37n0664_001:0630c10_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其象為涅槃。",
        "from": "X37n0664_001:0630c10_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師弘大法。",
        "from": "X37n0664_001:0630c10_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固宜頭長數尺。",
        "from": "X37n0664_001:0630c10_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而琪亦濯足。",
        "from": "X37n0664_001:0630c11_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當是收功於後之兆。",
        "from": "X37n0664_001:0630c11_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夕四月初四也。",
        "from": "X37n0664_001:0630c11_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂發心代募。",
        "from": "X37n0664_001:0630c12_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得門下弟張顯慨助四十金。",
        "from": "X37n0664_001:0630c12_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而相繼助者有差。",
        "from": "X37n0664_001:0630c13_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼程告竣。",
        "from": "X37n0664_001:0630c13_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于七月終旬。",
        "from": "X37n0664_001:0630c13_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計夢之夜迄工之竣。",
        "from": "X37n0664_001:0630c13_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僅一百二十日。",
        "from": "X37n0664_001:0630c14_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因紀其事如此。",
        "from": "X37n0664_001:0630c14_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以見法之流通。",
        "from": "X37n0664_001:0630c14_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非偶然也。",
        "from": "X37n0664_001:0630c15_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀越姓名初議不必刻。",
        "from": "X37n0664_001:0630c15_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善信發心。",
        "from": "X37n0664_001:0630c15_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍天洞鑒。",
        "from": "X37n0664_001:0630c16_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但世間法恐有昧因果者。",
        "from": "X37n0664_001:0630c16_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故琪所募一一備書。",
        "from": "X37n0664_001:0630c16_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師講法華經於海鹽。",
        "from": "X37n0664_001:0630c17_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偷兒竊其侍者兩匣去。",
        "from": "X37n0664_001:0630c17_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中多募票。",
        "from": "X37n0664_001:0630c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因而失所或不得登名經尾。",
        "from": "X37n0664_001:0630c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟護法韋馱證之。",
        "from": "X37n0664_001:0630c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無他也。",
        "from": "X37n0664_001:0630c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後零搜得姓名若干。",
        "from": "X37n0664_001:0630c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因附于左。",
        "from": "X37n0664_001:0630c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子明琪識",
        "from": "X37n0664_001:0630c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃經末後句(一卷)",
        "from": "X37n0664_001:0631a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清　淨挺　著",
        "from": "X37n0664_001:0631a04_0",
        "context_with_next_sentence": false
    }
]