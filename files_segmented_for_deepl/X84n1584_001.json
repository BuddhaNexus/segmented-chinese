[
    {
        "source_sentence": " 續燈存稾敘",
        "from": "X84n1584_001:0651b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲識佛性義當觀時節因緣。",
        "from": "X84n1584_001:0651b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔者世尊拈華迦葉破顏微笑。",
        "from": "X84n1584_001:0651b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達磨面壁神光斷臂安心。",
        "from": "X84n1584_001:0651b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮至曹谿以降。",
        "from": "X84n1584_001:0651b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沿流益長波瀾益廣。",
        "from": "X84n1584_001:0651b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱愈高機愈峻。",
        "from": "X84n1584_001:0651b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "派列五家門庭各立。",
        "from": "X84n1584_001:0651b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或電捲風馳。",
        "from": "X84n1584_001:0651b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或孤危聳峭。",
        "from": "X84n1584_001:0651b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或金鍼綿密。",
        "from": "X84n1584_001:0651b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或父子投機。",
        "from": "X84n1584_001:0651b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或箭鋒相拄。",
        "from": "X84n1584_001:0651b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其因緣時節千差萬別各各不同。",
        "from": "X84n1584_001:0651b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟非具載本末則後學何從考證。",
        "from": "X84n1584_001:0651b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯傳燈之所由作也。",
        "from": "X84n1584_001:0651b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自景德出傳燈。",
        "from": "X84n1584_001:0651b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後有廣燈。",
        "from": "X84n1584_001:0651b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有續燈。",
        "from": "X84n1584_001:0651b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有聯燈。",
        "from": "X84n1584_001:0651b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有普燈。",
        "from": "X84n1584_001:0651b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以暨紹興間大川濟公之會元。",
        "from": "X84n1584_001:0651b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布列分張騰輝溢彩。",
        "from": "X84n1584_001:0651b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛行於宋矣。",
        "from": "X84n1584_001:0651b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自宋季閱元而明迄今。",
        "from": "X84n1584_001:0651b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖代四百餘秊。",
        "from": "X84n1584_001:0651b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖溈仰法眼雲門三宗不幸後先相繼無傳。",
        "from": "X84n1584_001:0651b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而臨濟曹洞二支繩繩不絕聯芳竝茂。",
        "from": "X84n1584_001:0651b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代有其人。",
        "from": "X84n1584_001:0651b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柰何闃然未有繼其作者。",
        "from": "X84n1584_001:0651b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致使大方宗匠湮沒無聞。",
        "from": "X84n1584_001:0651b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殘碑斷碣沉埋於荒榛腐莽中。",
        "from": "X84n1584_001:0651b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖祖慧命何翅一絲之懸九鼎哉。",
        "from": "X84n1584_001:0651b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先南澗為此深懼留意捃摭蒐羅有秊。",
        "from": "X84n1584_001:0651b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每出訪求不遠千里。",
        "from": "X84n1584_001:0651b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇禎壬午夏適雲間。",
        "from": "X84n1584_001:0651b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晤施別駕笠澤居士。",
        "from": "X84n1584_001:0651b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其所纂不謀而同。",
        "from": "X84n1584_001:0651b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是浩然而歸。",
        "from": "X84n1584_001:0651b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載筆從事又數秊編集始得成書。",
        "from": "X84n1584_001:0651b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正謀命工鏤板。",
        "from": "X84n1584_001:0651b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遭時搶攘。",
        "from": "X84n1584_001:0651b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復秘而藏之。",
        "from": "X84n1584_001:0651b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標曰續燈存稾。",
        "from": "X84n1584_001:0651b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事未及舉。",
        "from": "X84n1584_001:0651b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不幸先師遽云。",
        "from": "X84n1584_001:0651b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂十餘秊來。",
        "from": "X84n1584_001:0651b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昱僻居荒裔力不從心。",
        "from": "X84n1584_001:0651b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切思秊運往矣來日幾何。",
        "from": "X84n1584_001:0651b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投足拊髀詎容再緩。",
        "from": "X84n1584_001:0651b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參徒定浪平能憂人之憂。",
        "from": "X84n1584_001:0651b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慨然擔荷。",
        "from": "X84n1584_001:0651c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願與諸祖列宗眉毛廝結出一口氣。",
        "from": "X84n1584_001:0651c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X84n1584_001:0651c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時節因緣若是耶。",
        "from": "X84n1584_001:0651c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後之君子復有繼而作者。",
        "from": "X84n1584_001:0651c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或繇此而推廣之。",
        "from": "X84n1584_001:0651c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾燈燈不墜。",
        "from": "X84n1584_001:0651c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯文豈有既哉。",
        "from": "X84n1584_001:0651c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康熈丙午中秋前一日武林南澗嗣法比丘龍丘行昱熏沐拜敘 廣求皇明禪師語錄塔銘備續傳燈小札竊念正法眼藏。",
        "from": "X84n1584_001:0651c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世尊囑付迦葉。",
        "from": "X84n1584_001:0651c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至達磨東度直指人心以來。",
        "from": "X84n1584_001:0651c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈燈相續各有傳記。",
        "from": "X84n1584_001:0651c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為人天眼目。",
        "from": "X84n1584_001:0651c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨自勝國迄今幾三百餘秊。",
        "from": "X84n1584_001:0651c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳燈斷缺致使熈朝宗匠湮沒無聞。",
        "from": "X84n1584_001:0651c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識者悲之。",
        "from": "X84n1584_001:0651c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀大師有志弗遂。",
        "from": "X84n1584_001:0651c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迨將入寂乃有傳燈未續則我慧命一大負之嘆。",
        "from": "X84n1584_001:0651c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余讀紫柏集不勝感憤。",
        "from": "X84n1584_001:0651c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶因家有藏書。",
        "from": "X84n1584_001:0651c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒思蒐羅我明諸尊宿語錄及傳記塔銘。",
        "from": "X84n1584_001:0651c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彚集成書以俟作者。",
        "from": "X84n1584_001:0651c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈謂徧簡文集誌乘。",
        "from": "X84n1584_001:0651c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡仙釋傳記咸為俗子刪除。",
        "from": "X84n1584_001:0651c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寥寥數家殊慚寡陋。",
        "from": "X84n1584_001:0651c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且當衰眊之秊不能遠出尋求。",
        "from": "X84n1584_001:0651c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢勒此以告通都大邑叢林尊宿及在家居士。",
        "from": "X84n1584_001:0651c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儻藏有我明禪師語錄及傳記塔銘梵剎志乘。",
        "from": "X84n1584_001:0651c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除嘉興楞嚴現今流通之外。",
        "from": "X84n1584_001:0651c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無論全書彚稾斷簡殘篇。",
        "from": "X84n1584_001:0651c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡一字一句有裨傳燈者悉祈惠教。",
        "from": "X84n1584_001:0651c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以便彚錄付梓。",
        "from": "X84n1584_001:0651c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為將來續燈之助。",
        "from": "X84n1584_001:0651c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以闡揚法寶。",
        "from": "X84n1584_001:0651c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續佛慧命。",
        "from": "X84n1584_001:0651c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其功德真無量無邊不可思議矣。",
        "from": "X84n1584_001:0651c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇禎壬午夏五月笠澤居士華亭施沛啟凡例是編既彚集成書。",
        "from": "X84n1584_001:0652a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍曰存稾者。",
        "from": "X84n1584_001:0652a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋以先師手澤未敢遽移。",
        "from": "X84n1584_001:0652a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟俟當來有志續傳燈者。",
        "from": "X84n1584_001:0652a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按濟宗大鑑第十八世已載會元末卷。",
        "from": "X84n1584_001:0652a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茲復重起者。",
        "from": "X84n1584_001:0652a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以會元所收未備故。",
        "from": "X84n1584_001:0652a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曹洞宗世代淵源悉從遠公。",
        "from": "X84n1584_001:0652a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續略遠為雲門之子。",
        "from": "X84n1584_001:0652a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若孫諒無冐濫祖宗之咎。",
        "from": "X84n1584_001:0652a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是書專為流通宗眼。",
        "from": "X84n1584_001:0652a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未獲機緣法語不與收入。",
        "from": "X84n1584_001:0652a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗣內得姓氏出處大略者。",
        "from": "X84n1584_001:0652a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載之以備續攷。",
        "from": "X84n1584_001:0652a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按大川輯會元列大慧居虎丘先。",
        "from": "X84n1584_001:0652a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翠峯居頂續傳燈列虎丘居大慧先。",
        "from": "X84n1584_001:0652a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公會元續略置洞宗於首卷。",
        "from": "X84n1584_001:0652a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "議者謂各尊自出之祖。",
        "from": "X84n1584_001:0652a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐非作者至意。",
        "from": "X84n1584_001:0652a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揆之事義各得其宜。",
        "from": "X84n1584_001:0652a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋傳燈非一家書。",
        "from": "X84n1584_001:0652a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何可作自他尊抑之見。",
        "from": "X84n1584_001:0652a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今臨濟曹洞率由其舊。",
        "from": "X84n1584_001:0652a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總標大鑑第幾十幾世。",
        "from": "X84n1584_001:0652a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與會元之世次間列者。",
        "from": "X84n1584_001:0652a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以適兩宗之便閱。",
        "from": "X84n1584_001:0652a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非有所自外也。",
        "from": "X84n1584_001:0652a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未詳法嗣因附於末。",
        "from": "X84n1584_001:0652a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濟宗始自大鑑第十八世。",
        "from": "X84n1584_001:0652a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終於第三十四世。",
        "from": "X84n1584_001:0652a19_1",
        "context_with_next_sentence": true
