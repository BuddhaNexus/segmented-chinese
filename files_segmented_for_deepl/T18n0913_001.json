[
    {
        "source_sentence": "火[合*牛]供養儀軌",
        "from": "T18n0913_001:0934c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫欲修行陀羅尼法。",
        "from": "T18n0913_001:0934c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須嚴飾道場。",
        "from": "T18n0913_001:0934c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外清潔衣服鮮淨。",
        "from": "T18n0913_001:0934c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸諠雜及諸戲論依念誦法則四時不闕若闕一時及違法則。",
        "from": "T18n0913_001:0934c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從違闕後起首。",
        "from": "T18n0913_001:0934c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法已前縱欲滿功唯欠一時。",
        "from": "T18n0913_001:0934c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時虧缺亦總不成。",
        "from": "T18n0913_001:0934c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要須終始無犯方論遍數。",
        "from": "T18n0913_001:0934c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其遍數準當部本尊自有次第。",
        "from": "T18n0913_001:0934c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍數訖已自有境界。",
        "from": "T18n0913_001:0934c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或恐念誦之時。",
        "from": "T18n0913_001:0934c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違三昧耶心不專的妄有緣起所以不能相應故淨境不即現前。",
        "from": "T18n0913_001:0934c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專修行人每月隨部。",
        "from": "T18n0913_001:0934c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必須隨力供養。",
        "from": "T18n0913_001:0934c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闕供養故亦非相應(隨部者謂如來部十五日菩薩部十四日金剛部八日諸天部五日藥叉部四日也)供養法皆用日初出時。",
        "from": "T18n0913_001:0934c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨壇食甘美香脆餅食脂油細食。",
        "from": "T18n0913_001:0934c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著銜蒸作乳粥酪飱。",
        "from": "T18n0913_001:0934c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加之酥蜜。",
        "from": "T18n0913_001:0934c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種妙饌隨力供養。",
        "from": "T18n0913_001:0934c29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆別盤中種種奠豆作食之時。",
        "from": "T18n0913_001:0935a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及將入道場。",
        "from": "T18n0913_001:0935a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆用軍荼利心明及又印。",
        "from": "T18n0913_001:0935a02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印諸供具明曰。",
        "from": "T18n0913_001:0935a03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　阿[合*牛]　密[口*栗](二合)　多　[合*牛]　[打-丁+巿]　吒(半音)事事皆呪三遍或七遍。",
        "from": "T18n0913_001:0935a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以免諸飛行羅剎之所盜竊。",
        "from": "T18n0913_001:0935a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不作意多有觸穢。",
        "from": "T18n0913_001:0935a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸使者等不生隨喜。",
        "from": "T18n0913_001:0935a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂障成就。",
        "from": "T18n0913_001:0935a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫結界護身必須迅速。",
        "from": "T18n0913_001:0935a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得遲疑猶豫。",
        "from": "T18n0913_001:0935a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐被揵疾藥叉來相嬈惱。",
        "from": "T18n0913_001:0935a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以結護及供養時極須嚴備。",
        "from": "T18n0913_001:0935a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事須迅速。",
        "from": "T18n0913_001:0935a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫供養時。",
        "from": "T18n0913_001:0935a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須洗浴清潔。",
        "from": "T18n0913_001:0935a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於道場外香水灑身。",
        "from": "T18n0913_001:0935a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後稱吽字三聲。",
        "from": "T18n0913_001:0935a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即右手作金剛拳。",
        "from": "T18n0913_001:0935a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想聖眾遍滿道場。",
        "from": "T18n0913_001:0935a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如影重重不相妨礙。",
        "from": "T18n0913_001:0935a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即禮三拜(誦外儀九遍)。",
        "from": "T18n0913_001:0935a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦大輪金剛真言(三七遍是懺悔法)。",
        "from": "T18n0913_001:0935a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌雙膝著地。",
        "from": "T18n0913_001:0935a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想[口*藍]字焚殄世界。",
        "from": "T18n0913_001:0935a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令如灰塵。",
        "from": "T18n0913_001:0935a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想唅字猶如黑風。",
        "from": "T18n0913_001:0935a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飄激令淨無復塵淨。",
        "from": "T18n0913_001:0935a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想鑁字門。",
        "from": "T18n0913_001:0935a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想同乳水清徹皎鏡。",
        "from": "T18n0913_001:0935a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於其上想蘇字門成妙高山。",
        "from": "T18n0913_001:0935a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山下乳海彌漫法界。",
        "from": "T18n0913_001:0935a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山上平坦果林芬葩。",
        "from": "T18n0913_001:0935a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水木清華澄湛照灼。",
        "from": "T18n0913_001:0935a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次執香爐焚香運想。",
        "from": "T18n0913_001:0935a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於妙高山上百寶廣殿。",
        "from": "T18n0913_001:0935a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶柱無邊寶剎懸幡。",
        "from": "T18n0913_001:0935a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶幢之上有半月輪。",
        "from": "T18n0913_001:0935a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪上耀魔尼寶珠。",
        "from": "T18n0913_001:0935a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行列遍布矜羯羅網絞絡其間(謂帝釋綱皆是寶珠珠珠相射瑩映明徹)復觀阿字成窣覩婆。",
        "from": "T18n0913_001:0935a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想靈塔成大日尊。",
        "from": "T18n0913_001:0935a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐寶蓮華。",
        "from": "T18n0913_001:0935a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正中(謂正殿中)跏坐。",
        "from": "T18n0913_001:0935a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面羅列億億蓮花。",
        "from": "T18n0913_001:0935a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一花中皆坐聖者。",
        "from": "T18n0913_001:0935a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂十方佛來作證明。",
        "from": "T18n0913_001:0935a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩金剛侍衛前後。",
        "from": "T18n0913_001:0935a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘諸眾無量無邊。",
        "from": "T18n0913_001:0935a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍充塞難可齊限。",
        "from": "T18n0913_001:0935a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其上空際雅樂妙音。",
        "from": "T18n0913_001:0935b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清冷悅情廣作佛事。",
        "from": "T18n0913_001:0935b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂淨居諸天作妙妙樂。",
        "from": "T18n0913_001:0935b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸眾左右賢瓶閼伽(閼伽香水商佉坏也)香雲寶花繽紛亂下。",
        "from": "T18n0913_001:0935b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香餐珍饍流溢寶盤。",
        "from": "T18n0913_001:0935b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芳果殊漿美味酷烈。",
        "from": "T18n0913_001:0935b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶衣製曳光曜中場。",
        "from": "T18n0913_001:0935b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠炬曦暉眾色交映。",
        "from": "T18n0913_001:0935b05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是運想已。",
        "from": "T18n0913_001:0935b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次依念誦法至本尊真言。",
        "from": "T18n0913_001:0935b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略誦多少(百八遍或三七)。",
        "from": "T18n0913_001:0935b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以虛空明妃及廣大等真言加持飲食。",
        "from": "T18n0913_001:0935b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則名為法供養。",
        "from": "T18n0913_001:0935b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養訖依念誦法撥遣(一百八遍)其火[合*牛]法。",
        "from": "T18n0913_001:0935b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一依前法護持及念誦法則。",
        "from": "T18n0913_001:0935b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且其火法略有四種。",
        "from": "T18n0913_001:0935b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一扇底迦法應當北面。",
        "from": "T18n0913_001:0935b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑪法圓作。",
        "from": "T18n0913_001:0935b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其諸供具皆悉白色(大約普賢為主然當部自有對法也)此謂息災滅罪。",
        "from": "T18n0913_001:0935b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服及畫像等皆悉白色。",
        "from": "T18n0913_001:0935b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二補瑟微迦法應當東面。",
        "from": "T18n0913_001:0935b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爐法方作。",
        "from": "T18n0913_001:0935b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其諸供具皆悉黃色(大約觀音為主)此謂成就滿願及諸勝事。",
        "from": "T18n0913_001:0935b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三阿毘遮魯迦法應當南面。",
        "from": "T18n0913_001:0935b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爐法三角。",
        "from": "T18n0913_001:0935b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其諸供具皆悉赤色(大約金剛手為主)。",
        "from": "T18n0913_001:0935b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四擯(必孕反)迦羅法應當西面。",
        "from": "T18n0913_001:0935b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爐法八角如蓮華葉。",
        "from": "T18n0913_001:0935b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其諸供養皆紫檀色。",
        "from": "T18n0913_001:0935b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此謂欲見大人求敬愛法。",
        "from": "T18n0913_001:0935b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已前四爐皆方一肘(小尺一尺八寸)深則半之爐底一以泥捏作獨股杵。",
        "from": "T18n0913_001:0935b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杵長八指其圓爐及八角爐。",
        "from": "T18n0913_001:0935b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作羯磨跋折羅(謂十字跋折羅)爐脣皆作三重。",
        "from": "T18n0913_001:0935b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從內高向外漸低。",
        "from": "T18n0913_001:0935b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每重皆闊四指(都闊十二指)脣緣之上任畫作花。",
        "from": "T18n0913_001:0935b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不能畫。",
        "from": "T18n0913_001:0935b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀想作之。",
        "from": "T18n0913_001:0935b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其火木及香花等物並置右邊。",
        "from": "T18n0913_001:0935b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時(日出時人定時後夜時)時別一百八遍火木用穀木及夜合木桑木柏木松木等。",
        "from": "T18n0913_001:0935b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其木每破削大如中指。",
        "from": "T18n0913_001:0935c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長十二指。",
        "from": "T18n0913_001:0935c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無令節類須條直取。",
        "from": "T18n0913_001:0935c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中色小樹。",
        "from": "T18n0913_001:0935c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用老枯樹及有蟲者。",
        "from": "T18n0913_001:0935c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採取之時必須看有好相方採。",
        "from": "T18n0913_001:0935c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見不孝子及不具足人婦人惡禽獸等並不須採。",
        "from": "T18n0913_001:0935c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即別覓之。",
        "from": "T18n0913_001:0935c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每一時用一百八枚。",
        "from": "T18n0913_001:0935c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於爐右邊作并欄疊之。",
        "from": "T18n0913_001:0935c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香法用白檀香一塊半斤以來者。",
        "from": "T18n0913_001:0935c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於石上用淨水磨之。",
        "from": "T18n0913_001:0935c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼沈香少分更磨之。",
        "from": "T18n0913_001:0935c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用欝金少分。",
        "from": "T18n0913_001:0935c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以沈香研磨令細。",
        "from": "T18n0913_001:0935c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用龍腦亦少分(如無龍惱鬱金單用檀香亦得也)。",
        "from": "T18n0913_001:0935c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閼伽法以淨濾水取少計塗香。",
        "from": "T18n0913_001:0935c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點淨水中妙好淨華。",
        "from": "T18n0913_001:0935c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著此水中亦精須新淨瓷椀盛之。",
        "from": "T18n0913_001:0935c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用香水一瓶當於坐前對爐置之(火供養左手執杵按之)。",
        "from": "T18n0913_001:0935c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丸香法沈香二兩。",
        "from": "T18n0913_001:0935c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淺香八兩。",
        "from": "T18n0913_001:0935c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘇合三兩。",
        "from": "T18n0913_001:0935c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香附子一兩。",
        "from": "T18n0913_001:0935c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安悉香二兩。",
        "from": "T18n0913_001:0935c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熏陸香二兩。",
        "from": "T18n0913_001:0935c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青木香一兩。",
        "from": "T18n0913_001:0935c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[序-予+言]唐二兩。",
        "from": "T18n0913_001:0935c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白檀香二兩。",
        "from": "T18n0913_001:0935c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍腦香一分。",
        "from": "T18n0913_001:0935c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欝金香一分。",
        "from": "T18n0913_001:0935c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麝香一分。",
        "from": "T18n0913_001:0935c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已上三物。",
        "from": "T18n0913_001:0935c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一處研。",
        "from": "T18n0913_001:0935c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲香二兩(漿水煮洗蜜和炒令乾別搗之)右和合以鍊蜜得所。",
        "from": "T18n0913_001:0935c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後入龍腦等三味(如鄉土難得隨得辨)。",
        "from": "T18n0913_001:0935c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秣香法甘松二兩。",
        "from": "T18n0913_001:0935c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "零陵香二兩。",
        "from": "T18n0913_001:0935c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芎藭二兩。",
        "from": "T18n0913_001:0935c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丁香一兩。",
        "from": "T18n0913_001:0936a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澤蘭二兩。",
        "from": "T18n0913_001:0936a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈香一兩。",
        "from": "T18n0913_001:0936a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好淺三兩(已上共搗)蘇合二兩。",
        "from": "T18n0913_001:0936a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍腦欝金麝香(各半分別絹袋盛著諸秣中了)白芥子別盛。",
        "from": "T18n0913_001:0936a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三味法酥蜜酪(每時各三四計酪則減半相和一銅盆盛之)。",
        "from": "T18n0913_001:0936a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀法稻穀花(糤米油煮及染作紫赤黃等色名為稻穀華盛于一器)油麻菉荳小豆小麥粳米(已上相和別盛一器)。",
        "from": "T18n0913_001:0936a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常合香法謂。",
        "from": "T18n0913_001:0936a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍腦如無。",
        "from": "T18n0913_001:0936a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合白豆蔻子一兩粒亦得(如無丁香亦得)供養火食爐食。",
        "from": "T18n0913_001:0936a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及乾棗栗黃沙糖。",
        "from": "T18n0913_001:0936a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石蜜隨力辨具。",
        "from": "T18n0913_001:0936a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初供養召請結界護身。",
        "from": "T18n0913_001:0936a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如前列結界時。",
        "from": "T18n0913_001:0936a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加地橛金剛牆金剛網金剛火焰無動刀印明等。",
        "from": "T18n0913_001:0936a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召請時各各召請八方護法天王。",
        "from": "T18n0913_001:0936a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦七遍。",
        "from": "T18n0913_001:0936a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同用金剛召請印。",
        "from": "T18n0913_001:0936a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先供養火天。",
        "from": "T18n0913_001:0936a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明三味三杓五穀丸香安悉香等。",
        "from": "T18n0913_001:0936a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後運心普供養五部聖眾。",
        "from": "T18n0913_001:0936a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦廣大真言及虛空明妃真言等。",
        "from": "T18n0913_001:0936a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦本尊真言燒火木。",
        "from": "T18n0913_001:0936a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩頭搵三味。",
        "from": "T18n0913_001:0936a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一遍。",
        "from": "T18n0913_001:0936a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即擲爐中。",
        "from": "T18n0913_001:0936a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍須定志安詳不得卒暴矣。",
        "from": "T18n0913_001:0936a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次投火木總畢。",
        "from": "T18n0913_001:0936a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即燒五穀。",
        "from": "T18n0913_001:0936a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每至娑嚩訶前加所祈法(謂某甲扇底迦娑縛訶也)數以香水遍灑諸物及火等。",
        "from": "T18n0913_001:0936a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑水時誦軍荼利心中心明。",
        "from": "T18n0913_001:0936a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初燃火真言曰。",
        "from": "T18n0913_001:0936a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　部　[口*律]惹嚩(三合)　邏(三七遍)以扇扇火不得口吹。",
        "from": "T18n0913_001:0936a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其火於寺內淨處者不得取俗家煮炙葷穢之火。",
        "from": "T18n0913_001:0936a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不然即須別鑽取。",
        "from": "T18n0913_001:0936a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍不得口吹。",
        "from": "T18n0913_001:0936a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用兩香爐。",
        "from": "T18n0913_001:0936a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍荼右邊燒丸香及沈香。",
        "from": "T18n0913_001:0936a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍荼左邊燒安悉香或熏陸或白膠香。",
        "from": "T18n0913_001:0936a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其供養物數隨時豐約。",
        "from": "T18n0913_001:0936a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豐則不可多燒。",
        "from": "T18n0913_001:0936a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約則不可令闕。",
        "from": "T18n0913_001:0936a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不能供養辨。",
        "from": "T18n0913_001:0936a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但於後夜及以晨朝運心廣獻。",
        "from": "T18n0913_001:0936a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多誦廣大及虛空明妃。",
        "from": "T18n0913_001:0936b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得擲木燒火應看火相。",
        "from": "T18n0913_001:0936b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火色法須白黃赤。",
        "from": "T18n0913_001:0936b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若黑色及青色並惡。",
        "from": "T18n0913_001:0936b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又聽火聲謂。",
        "from": "T18n0913_001:0936b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "音樂悅意聲者善。",
        "from": "T18n0913_001:0936b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若猪狗及以驢騾鳥梟等聲者不善。",
        "from": "T18n0913_001:0936b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又發焰掣曳流利者善。",
        "from": "T18n0913_001:0936b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若熅勃煙欝衝人者不善。",
        "from": "T18n0913_001:0936b05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或爆吒迸散者。",
        "from": "T18n0913_001:0936b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非善相。",
        "from": "T18n0913_001:0936b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善相之法不令人熱。",
        "from": "T18n0913_001:0936b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其炭仍須端直調均。",
        "from": "T18n0913_001:0936b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應用香水遍洗。",
        "from": "T18n0913_001:0936b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆長十二指以來。",
        "from": "T18n0913_001:0936b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其八天真言及火天真言。",
        "from": "T18n0913_001:0936b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已別錄。",
        "from": "T18n0913_001:0936b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具火色若吉。",
        "from": "T18n0913_001:0936b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則可燒爐果子充供養。",
        "from": "T18n0913_001:0936b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火色若不善即不須燒。",
        "from": "T18n0913_001:0936b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒火供養七日為限。",
        "from": "T18n0913_001:0936b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如事不獲已三七日亦得。",
        "from": "T18n0913_001:0936b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此火供養法。",
        "from": "T18n0913_001:0936b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以資念誦令速成就。",
        "from": "T18n0913_001:0936b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿毘遮魯迦等。",
        "from": "T18n0913_001:0936b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不應為。",
        "from": "T18n0913_001:0936b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求成就妨大緣故。",
        "from": "T18n0913_001:0936b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於觀想及夢寐之間所遇境界如經廣明。",
        "from": "T18n0913_001:0936b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此不具述。",
        "from": "T18n0913_001:0936b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火法又不速成。",
        "from": "T18n0913_001:0936b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即應加部母真言雙誦。",
        "from": "T18n0913_001:0936b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又經三七日來加部母真言不遂本志。",
        "from": "T18n0913_001:0936b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即印塔每日一千遍。",
        "from": "T18n0913_001:0936b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又經三七日必果志矣。",
        "from": "T18n0913_001:0936b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔印長一肘。",
        "from": "T18n0913_001:0936b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應自須籌量自力多少。",
        "from": "T18n0913_001:0936b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業行精微雖有課數。",
        "from": "T18n0913_001:0936b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而秉護麁疎亦非相應。",
        "from": "T18n0913_001:0936b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事須三業調柔。",
        "from": "T18n0913_001:0936b19_8",
        "context_with_next_sentence": true
    },
    {
