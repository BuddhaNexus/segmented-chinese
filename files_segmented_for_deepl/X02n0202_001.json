[
    {
        "source_sentence": "佛說大如意寶珠輪牛王守護神呪經",
        "from": "X02n0202_001:0878c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿謨伽三藏奉詔譯",
        "from": "X02n0202_001:0878c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "X02n0202_001:0878c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在波羅捺鹿野園中。",
        "from": "X02n0202_001:0878c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為阿若拘隣等五人。",
        "from": "X02n0202_001:0878c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉四諦法輪。",
        "from": "X02n0202_001:0878c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時會中有一天子。",
        "from": "X02n0202_001:0878c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰牛王神。",
        "from": "X02n0202_001:0878c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起。",
        "from": "X02n0202_001:0878c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曲躬合掌。",
        "from": "X02n0202_001:0878c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足而白佛言。",
        "from": "X02n0202_001:0878c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X02n0202_001:0878c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有隨心自在萬事滿足神呪。",
        "from": "X02n0202_001:0878c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及利益諸有情故。",
        "from": "X02n0202_001:0878c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊。",
        "from": "X02n0202_001:0878c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍聽許我今欲說大神呪。",
        "from": "X02n0202_001:0878c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛讚言。",
        "from": "X02n0202_001:0878c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉速可演說。",
        "from": "X02n0202_001:0878c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲聞。",
        "from": "X02n0202_001:0878c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時天子即說呪曰。",
        "from": "X02n0202_001:0878c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵悉底嚕悉底嚕(利)伴惹伴惹[言*曩]謨履底伽補瑟底伽阿毗遮阿毗遮真多摩尼莎賀時薄伽梵。",
        "from": "X02n0202_001:0878c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞說神呪。",
        "from": "X02n0202_001:0878c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普觀一切。",
        "from": "X02n0202_001:0878c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸有情利益安樂故。",
        "from": "X02n0202_001:0878c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "X02n0202_001:0878c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世間諸眾生　　逼切諸貧苦　　雖求資有福　施與諸眾生　　令得無憂惱　　術力勝諸獸　哀愍諸眾生　　施與諸珍寶　　滿足諸希求　齊等諸天眾　　福力無等限時薄伽仙毗吉那仙以歡喜信樂心。",
        "from": "X02n0202_001:0878c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻種種香華燈明。",
        "from": "X02n0202_001:0878c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四事供養等。",
        "from": "X02n0202_001:0878c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮牛王神珠天。",
        "from": "X02n0202_001:0878c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "X02n0202_001:0878c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　塗香華鬘及燒香　　燈明飲食與錢帛　奉獻牛王神獸天　　納受悅預增勢力　威德神通遍諸色　　成種種色諸財寶　施與一切眾生類　　故我供養神獸天復次牛王珠天。",
        "from": "X02n0202_001:0879a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "X02n0202_001:0879a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有諸善男子善女人。",
        "from": "X02n0202_001:0879a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此經者。",
        "from": "X02n0202_001:0879a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼獲幾所福德聚。",
        "from": "X02n0202_001:0879a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是說已。",
        "from": "X02n0202_001:0879a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告牛王珠。",
        "from": "X02n0202_001:0879a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此經典者。",
        "from": "X02n0202_001:0879a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初發心乃至成佛。",
        "from": "X02n0202_001:0879a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身所有福德聚。",
        "from": "X02n0202_001:0879a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子善女人福德聚。",
        "from": "X02n0202_001:0879a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與彼正等。",
        "from": "X02n0202_001:0879a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如是知。",
        "from": "X02n0202_001:0879a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼善男子善女人。",
        "from": "X02n0202_001:0879a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從如來口生佛心之子。",
        "from": "X02n0202_001:0879a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是善男子善女人所方所。",
        "from": "X02n0202_001:0879a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為有佛施作佛事。",
        "from": "X02n0202_001:0879a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故若樂摧破魔軍利樂一切。",
        "from": "X02n0202_001:0879a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故汝等欲得一切如來真實智惠者。",
        "from": "X02n0202_001:0879a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當一心讀誦此經。",
        "from": "X02n0202_001:0879a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能速成就一切福德。",
        "from": "X02n0202_001:0879a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於題名。",
        "from": "X02n0202_001:0879a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有五種靈驗。",
        "from": "X02n0202_001:0879a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為五。",
        "from": "X02n0202_001:0879a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一受持人。",
        "from": "X02n0202_001:0879a13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能摧破魔軍眾。",
        "from": "X02n0202_001:0879a13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二讀誦人。",
        "from": "X02n0202_001:0879a14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世後世得福德無量。",
        "from": "X02n0202_001:0879a14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三書寫供養人。",
        "from": "X02n0202_001:0879a14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世後世得消滅無量億劫之所犯罪。",
        "from": "X02n0202_001:0879a15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至阿鼻拔致位。",
        "from": "X02n0202_001:0879a15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四消除一切病苦壽命延長。",
        "from": "X02n0202_001:0879a16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五得此寶珠一闕之分。",
        "from": "X02n0202_001:0879a16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致供養祭讀誦恭敬者。",
        "from": "X02n0202_001:0879a17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世。",
        "from": "X02n0202_001:0879a17_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉諸貧苦報。",
        "from": "X02n0202_001:0879a17_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令得祕藏無盡果。",
        "from": "X02n0202_001:0879a18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛說此神呪經已。",
        "from": "X02n0202_001:0879a18_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾會。",
        "from": "X02n0202_001:0879a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜。",
        "from": "X02n0202_001:0879a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受奉行。",
        "from": "X02n0202_001:0879a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大如意寶珠牛王守護神呪經",
        "from": "X02n0202_001:0879a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元應二年十一月二十八日以快玄得業本寫之竟金剛資賴心此書尾城南真福密寺藏祕本東南院任瑜法親王相傳之古本也。",
        "from": "X02n0202_001:0879a21_0",
        "context_with_next_sentence": false
    }
]