[
    {
        "source_sentence": "隆興佛教編年通論",
        "from": "X75n1512_029:0252a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　聖宋御製附",
        "from": "X75n1512_029:0252a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太平興國三年。",
        "from": "X75n1512_029:0252a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太宗至仁應道神功聖德文武睿烈大明廣孝皇帝。",
        "from": "X75n1512_029:0252a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御製新譯三藏聖教序。",
        "from": "X75n1512_029:0252a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜天竺三藏法師天息災。",
        "from": "X75n1512_029:0252a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其詞曰。",
        "from": "X75n1512_029:0252a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大矣哉我佛之教也。",
        "from": "X75n1512_029:0252a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化導群迷闡揚宗性。",
        "from": "X75n1512_029:0252a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣博宏辨。",
        "from": "X75n1512_029:0252a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "英彥莫能究其旨。",
        "from": "X75n1512_029:0252a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精微妙說。",
        "from": "X75n1512_029:0252a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庸愚豈可度其源。",
        "from": "X75n1512_029:0252a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義理幽玄真空莫測。",
        "from": "X75n1512_029:0252a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "包括萬象譬喻無垠。",
        "from": "X75n1512_029:0252a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總法網之紀綱。",
        "from": "X75n1512_029:0252a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演無際之正教。",
        "from": "X75n1512_029:0252a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔四生之苦海。",
        "from": "X75n1512_029:0252a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譯三藏之秘言。",
        "from": "X75n1512_029:0252a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天地變化乎陰陽。",
        "from": "X75n1512_029:0252a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月盈虧乎寒暑。",
        "from": "X75n1512_029:0252a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大則說諸善惡。",
        "from": "X75n1512_029:0252a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細則比於河沙。",
        "from": "X75n1512_029:0252a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含識萬端弗可盡述。",
        "from": "X75n1512_029:0252a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若窺像法如影隨形。",
        "from": "X75n1512_029:0252a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離六情以長存。",
        "from": "X75n1512_029:0252a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷千劫而可久。",
        "from": "X75n1512_029:0252a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌內藏於芥子。",
        "from": "X75n1512_029:0252a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來坥蕩於無邊。",
        "from": "X75n1512_029:0252a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達磨西來傳法東土。",
        "from": "X75n1512_029:0252a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣揚妙理順從指歸。",
        "from": "X75n1512_029:0252a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼岸菩提愛河生滅。",
        "from": "X75n1512_029:0252a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用行於五濁惡趣。",
        "from": "X75n1512_029:0252a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極溺於三業途中。",
        "from": "X75n1512_029:0252a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經垂世之無窮。",
        "from": "X75n1512_029:0252a20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道無私而永泰。",
        "from": "X75n1512_029:0252a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪山貝葉若銀臺之耀目。",
        "from": "X75n1512_029:0252a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲月煙蘿起香界之自遠。",
        "from": "X75n1512_029:0252a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巍巍罕測。",
        "from": "X75n1512_029:0252a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杳杳難名。",
        "from": "X75n1512_029:0252a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以道資十聖。",
        "from": "X75n1512_029:0252a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德被三賢。",
        "from": "X75n1512_029:0252a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至道啟於乾元。",
        "from": "X75n1512_029:0252a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾妙生乎太易。",
        "from": "X75n1512_029:0252a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綜繁形類。",
        "from": "X75n1512_029:0252a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竅鑿昏冥。",
        "from": "X75n1512_029:0252a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕彼是非。",
        "from": "X75n1512_029:0252a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開茲蒙昧。",
        "from": "X75n1512_029:0252a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有西域法師天息災等。",
        "from": "X75n1512_029:0252a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常持四忍。",
        "from": "X75n1512_029:0252b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "早悟三空。",
        "from": "X75n1512_029:0252b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻貝葉之真詮。",
        "from": "X75n1512_029:0252b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續人天之聖教。",
        "from": "X75n1512_029:0252b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芳猷重啟。",
        "from": "X75n1512_029:0252b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶運昌時。",
        "from": "X75n1512_029:0252b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潤五聲於文章。",
        "from": "X75n1512_029:0252b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暢四始於風律。",
        "from": "X75n1512_029:0252b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堂堂容止。",
        "from": "X75n1512_029:0252b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穆穆耀華。",
        "from": "X75n1512_029:0252b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曠劫而昏蟄重明。",
        "from": "X75n1512_029:0252b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄門昭顯。",
        "from": "X75n1512_029:0252b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軌範而宏光妙法。",
        "from": "X75n1512_029:0252b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨界騰音。",
        "from": "X75n1512_029:0252b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益有情。",
        "from": "X75n1512_029:0252b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱登覺岸。",
        "from": "X75n1512_029:0252b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所障礙。",
        "from": "X75n1512_029:0252b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救諸疲羸。",
        "from": "X75n1512_029:0252b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥昧慈悲汗漫物表。",
        "from": "X75n1512_029:0252b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柔伏貪佷啟廸昏愚。",
        "from": "X75n1512_029:0252b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演小乘則聲聞合其儀。",
        "from": "X75n1512_029:0252b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論大乘則正覺立其性。",
        "from": "X75n1512_029:0252b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含靈悟而蒙福。",
        "from": "X75n1512_029:0252b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏教闕而重興。",
        "from": "X75n1512_029:0252b07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻化迷途。",
        "from": "X75n1512_029:0252b08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火宅深喻。",
        "from": "X75n1512_029:0252b08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖設其教。",
        "from": "X75n1512_029:0252b08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知者多。",
        "from": "X75n1512_029:0252b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善念生而福量潛臻。",
        "from": "X75n1512_029:0252b09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡業興而勝緣皆墜。",
        "from": "X75n1512_029:0252b09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調御四眾。",
        "from": "X75n1512_029:0252b09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積行十方。",
        "from": "X75n1512_029:0252b10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澍華雨於金輪。",
        "from": "X75n1512_029:0252b10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護恒河於玉闕。",
        "from": "X75n1512_029:0252b10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有頂之風不可壞。",
        "from": "X75n1512_029:0252b10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無際之水不能漂。",
        "from": "X75n1512_029:0252b11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄寂湛然圓明清潔之智慧。",
        "from": "X75n1512_029:0252b11_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性空無染實相解脫之因緣。",
        "from": "X75n1512_029:0252b12_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以離煩惱於心田。",
        "from": "X75n1512_029:0252b12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以得清涼於宇宙。",
        "from": "X75n1512_029:0252b13_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　朕慚非博學。",
        "from": "X75n1512_029:0252b13_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋典微閑。",
        "from": "X75n1512_029:0252b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈堪敘文以示來者。",
        "from": "X75n1512_029:0252b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如腐螢爝火不足比於皎日。",
        "from": "X75n1512_029:0252b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將微蠡量海豈能窮盡於深淵者哉。",
        "from": "X75n1512_029:0252b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸平二年。",
        "from": "X75n1512_029:0252b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真宗膺符稽古成功遜德文明武定章聖元孝皇帝。",
        "from": "X75n1512_029:0252b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御製繼聖教序。",
        "from": "X75n1512_029:0252b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜天竺三藏朝散大夫試光祿卿明教大師法賢。",
        "from": "X75n1512_029:0252b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭曰。",
        "from": "X75n1512_029:0252b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高明肇分。",
        "from": "X75n1512_029:0252b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三辰方乃序其始。",
        "from": "X75n1512_029:0252b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厚載初定。",
        "from": "X75n1512_029:0252b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬彚於以發乎端。",
        "from": "X75n1512_029:0252b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清濁之體既彰。",
        "from": "X75n1512_029:0252b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡之源是顯。",
        "from": "X75n1512_029:0252b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後以文物立其教。",
        "from": "X75n1512_029:0252b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以正典化其俗。",
        "from": "X75n1512_029:0252b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益之功同歸於理。",
        "from": "X75n1512_029:0252b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是乎像法來於西國。",
        "from": "X75n1512_029:0252b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真諦流於中夏。",
        "from": "X75n1512_029:0252b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞貫千古。",
        "from": "X75n1512_029:0252b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實之理無以窮。",
        "from": "X75n1512_029:0252b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囊括九圍。",
        "from": "X75n1512_029:0252b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄妙之門莫能究。",
        "from": "X75n1512_029:0252b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言乎妄想則五蘊皆空。",
        "from": "X75n1512_029:0252b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現乃真容則一毫圓滿廣大之教。",
        "from": "X75n1512_029:0252b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈能絕述者哉。",
        "from": "X75n1512_029:0252c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏覩太宗神功聖德文武皇帝。",
        "from": "X75n1512_029:0252c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法性周圓。",
        "from": "X75n1512_029:0252c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁慈普布。",
        "from": "X75n1512_029:0252c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化蠻貊則萬邦輻湊。",
        "from": "X75n1512_029:0252c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躋蒸民於仁壽之鄉。",
        "from": "X75n1512_029:0252c03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇教法則四海雲從。",
        "from": "X75n1512_029:0252c03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惠蒼生於富庶之域。",
        "from": "X75n1512_029:0252c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見尊經之浩汗。",
        "from": "X75n1512_029:0252c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設方便以救沈淪。",
        "from": "X75n1512_029:0252c04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知法界之恢宏。",
        "from": "X75n1512_029:0252c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行精進而攝懈怠。",
        "from": "X75n1512_029:0252c05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃擇其邃宇。",
        "from": "X75n1512_029:0252c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "校彼真文。",
        "from": "X75n1512_029:0252c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命天竺之高僧譯貝多之佛語。",
        "from": "X75n1512_029:0252c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象管翻成於金字。",
        "from": "X75n1512_029:0252c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠編復置於琅函。",
        "from": "X75n1512_029:0252c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍宮之聖藻惟新。",
        "from": "X75n1512_029:0252c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鷲嶺之苾蒭仰歎。",
        "from": "X75n1512_029:0252c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繇是三乘共貫。",
        "from": "X75n1512_029:0252c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四諦同圓。",
        "from": "X75n1512_029:0252c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡苦空真正之言。",
        "from": "X75n1512_029:0252c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願秘密研精之義。",
        "from": "X75n1512_029:0252c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚相相乎實相。",
        "from": "X75n1512_029:0252c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論空空乎盡空。",
        "from": "X75n1512_029:0252c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴之理合軌轍。",
        "from": "X75n1512_029:0252c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金僊之教同規矩。",
        "from": "X75n1512_029:0252c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　朕纘嗣丕搆。",
        "from": "X75n1512_029:0252c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭臨寶圖。",
        "from": "X75n1512_029:0252c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常翼翼以撫兆民。",
        "from": "X75n1512_029:0252c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每兢兢而守先訓。",
        "from": "X75n1512_029:0252c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至釋典猶未精詳。",
        "from": "X75n1512_029:0252c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "源其幽深曷能探測。",
        "from": "X75n1512_029:0252c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有譯經西域僧法賢。",
        "from": "X75n1512_029:0252c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏章懇切。",
        "from": "X75n1512_029:0252c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致意專勤。",
        "from": "X75n1512_029:0252c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以先皇帝大闡真風高傳佛日。",
        "from": "X75n1512_029:0252c14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興前王之墜典。",
        "from": "X75n1512_029:0252c15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "振覺路之頹綱。",
        "from": "X75n1512_029:0252c15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲旌天造之功。",
        "from": "X75n1512_029:0252c16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庸用廣聖文之述作。",
        "from": "X75n1512_029:0252c16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請予製序繼聖教焉。",
        "from": "X75n1512_029:0252c16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自聖考上仙。",
        "from": "X75n1512_029:0252c17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追號罔息。",
        "from": "X75n1512_029:0252c18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政事之外何暇經心。",
        "from": "X75n1512_029:0252c18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今已禫除思臻微奧。",
        "from": "X75n1512_029:0252c18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖幼承慈訓。",
        "from": "X75n1512_029:0252c19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柰夙乏通才。",
        "from": "X75n1512_029:0252c20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焉窮乎法海之津涯。",
        "from": "X75n1512_029:0252c20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫造乎空門閫域。",
        "from": "X75n1512_029:0252c20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略敷大意以徇輿情。",
        "from": "X75n1512_029:0252c21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蹄涔(音岑)不足擬浴日之波。",
        "from": "X75n1512_029:0252c21_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尺箠豈能量昊天之影。",
        "from": "X75n1512_029:0252c22_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊述短序以紀聖功者焉。",
        "from": "X75n1512_029:0252c22_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景祐三年。",
        "from": "X75n1512_029:0252c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁宗體大法道極功至德神文聖武睿明哲孝皇帝。",
        "from": "X75n1512_029:0252c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御製天聖廣燈錄序。",
        "from": "X75n1512_029:0253a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜護國將軍節度使駙馬都尉李遵勗。",
        "from": "X75n1512_029:0253a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭曰。",
        "from": "X75n1512_029:0253a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟大雄之闡教也。",
        "from": "X75n1512_029:0253a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨為宗。",
        "from": "X75n1512_029:0253a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲救世。",
        "from": "X75n1512_029:0253a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解煩惱之苦縛。",
        "from": "X75n1512_029:0253a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟方便之化門。",
        "from": "X75n1512_029:0253a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住雪山。",
        "from": "X75n1512_029:0253a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始階於西域。",
        "from": "X75n1512_029:0253a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛行漢殿。",
        "from": "X75n1512_029:0253a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂通於東旦。",
        "from": "X75n1512_029:0253a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼土得道何可勝言。",
        "from": "X75n1512_029:0253a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方承流於是乎在。",
        "from": "X75n1512_029:0253a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖陰魔時有以侮伐。",
        "from": "X75n1512_029:0253a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或示神通。",
        "from": "X75n1512_029:0253a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而帝釋常加於護持。",
        "from": "X75n1512_029:0253a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無虧實相。",
        "from": "X75n1512_029:0253a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自法眼授記。",
        "from": "X75n1512_029:0253a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鞠多即心。",
        "from": "X75n1512_029:0253a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛衣不傳。",
        "from": "X75n1512_029:0253a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮六祖而頓悟。",
        "from": "X75n1512_029:0253a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛頭析派。",
        "from": "X75n1512_029:0253a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續千燈而罔窮。",
        "from": "X75n1512_029:0253a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繇斯慧炬益繁。",
        "from": "X75n1512_029:0253a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法雲滋陰。",
        "from": "X75n1512_029:0253a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旁行梵學。",
        "from": "X75n1512_029:0253a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉譯華音。",
        "from": "X75n1512_029:0253a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扣寂禪關。",
        "from": "X75n1512_029:0253a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指迷覺路。",
        "from": "X75n1512_029:0253a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達者至乎離念。",
        "from": "X75n1512_029:0253a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超登者于以忘筌。",
        "from": "X75n1512_029:0253a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為無所不通之明。",
        "from": "X75n1512_029:0253a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處不可思議之首。",
        "from": "X75n1512_029:0253a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷代聖帝明王旦有為之信向者矣。",
        "from": "X75n1512_029:0253a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我太祖之乘籙也。",
        "from": "X75n1512_029:0253a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法延乎住世。",
        "from": "X75n1512_029:0253a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我太宗之握紀也。",
        "from": "X75n1512_029:0253a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙供滿於諸天。",
        "from": "X75n1512_029:0253a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真宗皇帝密契菩提之心。",
        "from": "X75n1512_029:0253a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深研善逝之旨。",
        "from": "X75n1512_029:0253a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能仁之化一雨普霑。",
        "from": "X75n1512_029:0253a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外護之心二纓喜捨。",
        "from": "X75n1512_029:0253a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　朕嗣景祚。",
        "from": "X75n1512_029:0253a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子育群黎。",
        "from": "X75n1512_029:0253a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將以歐富壽之民。",
        "from": "X75n1512_029:0253a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居常奉調御之本。",
        "from": "X75n1512_029:0253a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丕胄基搆。",
        "from": "X75n1512_029:0253a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖祇席於蘿圖導引津梁。",
        "from": "X75n1512_029:0253a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每欽惟於竺[(畾/(冗-几+互))*毛]。",
        "from": "X75n1512_029:0253a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茲乃遵前王之道也。",
        "from": "X75n1512_029:0253a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其可忽諸。",
        "from": "X75n1512_029:0253a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖廣燈錄者。",
        "from": "X75n1512_029:0253a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護國將軍節度使駙馬都尉李遵勗之所編次也。",
        "from": "X75n1512_029:0253a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遵勗承榮外舘。",
        "from": "X75n1512_029:0253a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受律齋壇。",
        "from": "X75n1512_029:0253a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靡恃貴而驕矜。",
        "from": "X75n1512_029:0253a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗澡心於夷曠。",
        "from": "X75n1512_029:0253a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竭積順之素志。",
        "from": "X75n1512_029:0253a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趨求福之本因。",
        "from": "X75n1512_029:0253a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑六根之情塵。",
        "from": "X75n1512_029:0253a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別三乘之歸趣。",
        "from": "X75n1512_029:0253a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蹟其祖錄。",
        "from": "X75n1512_029:0253a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣彼宗風。",
        "from": "X75n1512_029:0253a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "采開士之迅機。",
        "from": "X75n1512_029:0253a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集叢林之雅對。",
        "from": "X75n1512_029:0253a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粗裨於理。",
        "from": "X75n1512_029:0253b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸屬之篇。",
        "from": "X75n1512_029:0253b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞貢紺編來聞扆座。",
        "from": "X75n1512_029:0253b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且有勤請求錫序文。",
        "from": "X75n1512_029:0253b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　朕既嘉乃誠重違其意。",
        "from": "X75n1512_029:0253b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載念薄伽之旨。",
        "from": "X75n1512_029:0253b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諒有庇於生靈。",
        "from": "X75n1512_029:0253b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近戚之家又不嬰於我慢。",
        "from": "X75n1512_029:0253b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良可嘉尚。",
        "from": "X75n1512_029:0253b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因賜之題。",
        "from": "X75n1512_029:0253b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈徒然哉。",
        "from": "X75n1512_029:0253b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦王者溥濟萬物之源也。",
        "from": "X75n1512_029:0253b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其錄三十卷。",
        "from": "X75n1512_029:0253b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時景祐三年四月日賜序。",
        "from": "X75n1512_029:0253b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建中靖國元年。",
        "from": "X75n1512_029:0253b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徽宗體神合道駿烈遜功聖文仁德憲慈顯孝皇帝。",
        "from": "X75n1512_029:0253b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建中靖國續燈錄序。",
        "from": "X75n1512_029:0253b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜東部法雲禪寺住持傳法佛國禪師惟白。",
        "from": "X75n1512_029:0253b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詞曰。",
        "from": "X75n1512_029:0253b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔釋迦如來之出世也。",
        "from": "X75n1512_029:0253b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受然燈之記。",
        "from": "X75n1512_029:0253b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生淨飯之家。",
        "from": "X75n1512_029:0253b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分手指乎天地。",
        "from": "X75n1512_029:0253b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而真機已露。",
        "from": "X75n1512_029:0253b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "游門觀於老死。",
        "from": "X75n1512_029:0253b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而幻緣頓寂。",
        "from": "X75n1512_029:0253b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及乎唱道鷄園。",
        "from": "X75n1512_029:0253b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "騰芳鷲嶺。",
        "from": "X75n1512_029:0253b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊剎境遂現於一毫之端。",
        "from": "X75n1512_029:0253b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大千經卷畢出於微塵之表。",
        "from": "X75n1512_029:0253b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西被竺土。",
        "from": "X75n1512_029:0253b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東流震旦。",
        "from": "X75n1512_029:0253b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "編葉而書則一時聖教雖傳於慶喜。",
        "from": "X75n1512_029:0253b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈華而笑則正法眼藏獨付於飲光。",
        "from": "X75n1512_029:0253b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自達磨西來實為初祖。",
        "from": "X75n1512_029:0253b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其傳二三四五而至於曹溪。",
        "from": "X75n1512_029:0253b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是雙林之道逾光。",
        "from": "X75n1512_029:0253b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一滴之流寢廣。",
        "from": "X75n1512_029:0253b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自南嶽青原而下分為五宗。",
        "from": "X75n1512_029:0253b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各擅門風。",
        "from": "X75n1512_029:0253b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應機酧對。",
        "from": "X75n1512_029:0253b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖建立不同而會歸則一。",
        "from": "X75n1512_029:0253b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不箭鋒相拄鞭影齊施。",
        "from": "X75n1512_029:0253b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "接物利生啟悟多矣。",
        "from": "X75n1512_029:0253b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "源派廣迆。",
        "from": "X75n1512_029:0253b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枝葉扶踈。",
        "from": "X75n1512_029:0253b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而雲門臨濟二宗遂獨盛於　天下。",
        "from": "X75n1512_029:0253b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　朕膺天寶命。",
        "from": "X75n1512_029:0253b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹國大統。",
        "from": "X75n1512_029:0253b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭惟藝祖闢度門於緜宇。",
        "from": "X75n1512_029:0253b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太宗闡秘義於敷天。",
        "from": "X75n1512_029:0253b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章聖傳燈於景德。",
        "from": "X75n1512_029:0253b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永昭廣燈於天聖。",
        "from": "X75n1512_029:0253b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆宏暢真風協助神化。",
        "from": "X75n1512_029:0253b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以成無為之治者也。",
        "from": "X75n1512_029:0253b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於皇神考尤嚮空宗。",
        "from": "X75n1512_029:0253c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元豐三年詔於大相國寺剏二禪。",
        "from": "X75n1512_029:0253c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闢慧林於東序。",
        "from": "X75n1512_029:0253c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建智海於西廡。",
        "from": "X75n1512_029:0253c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壬戌之歲以越國大長公主及集慶軍節度觀察留後駙馬都尉張敦禮之請。",
        "from": "X75n1512_029:0253c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後建法雲禪寺於國之南。",
        "from": "X75n1512_029:0253c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是祖席光輝叢林鼎盛。",
        "from": "X75n1512_029:0253c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下襲方袍慕禪悅者雲集於上都矣。",
        "from": "X75n1512_029:0253c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今敦禮以其寺住持僧佛國禪師惟白。",
        "from": "X75n1512_029:0253c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "探最上乘。",
        "from": "X75n1512_029:0253c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了第一義。",
        "from": "X75n1512_029:0253c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屢入中禁。",
        "from": "X75n1512_029:0253c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三登高座。",
        "from": "X75n1512_029:0253c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣揚妙旨。",
        "from": "X75n1512_029:0253c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良愜至懷。",
        "from": "X75n1512_029:0253c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔能仁說法華經。",
        "from": "X75n1512_029:0253c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放眉間白毫相。",
        "from": "X75n1512_029:0253c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光照東方萬八千世界。",
        "from": "X75n1512_029:0253c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彌勒發問。",
        "from": "X75n1512_029:0253c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊決疑。",
        "from": "X75n1512_029:0253c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以謂日月燈明佛本光瑞如此。",
        "from": "X75n1512_029:0253c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持是經者妙光法師。",
        "from": "X75n1512_029:0253c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其證者普明如來。",
        "from": "X75n1512_029:0253c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今續燈之名。",
        "from": "X75n1512_029:0253c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋燈燈相續。",
        "from": "X75n1512_029:0253c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光光相入。",
        "from": "X75n1512_029:0253c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義有在於是矣。",
        "from": "X75n1512_029:0253c12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噫。",
        "from": "X75n1512_029:0253c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓澄覺海本含褁於十方。",
        "from": "X75n1512_029:0253c13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅空漚遂沉淪於三有。",
        "from": "X75n1512_029:0253c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因明立所。",
        "from": "X75n1512_029:0253c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由塵發知。",
        "from": "X75n1512_029:0253c14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "織妄相仍轉入諸趣。",
        "from": "X75n1512_029:0253c14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良可悲也。",
        "from": "X75n1512_029:0253c15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若回光內照。",
        "from": "X75n1512_029:0253c15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發真歸元。",
        "from": "X75n1512_029:0253c15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則是錄也。",
        "from": "X75n1512_029:0253c15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直指性宗單傳心印。",
        "from": "X75n1512_029:0253c16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可得於眉睫。",
        "from": "X75n1512_029:0253c16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可薦於言前。",
        "from": "X75n1512_029:0253c16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉手而擎妙喜之世界。",
        "from": "X75n1512_029:0253c17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指而現莊嚴之樓閣。",
        "from": "X75n1512_029:0253c17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通妙用真不可得而思議也。",
        "from": "X75n1512_029:0253c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉於有眾締此勝緣。",
        "from": "X75n1512_029:0253c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱離迷津。",
        "from": "X75n1512_029:0253c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偕之覺路。",
        "from": "X75n1512_029:0253c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯　朕之志已。",
        "from": "X75n1512_029:0253c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建中靖國元年八月十五日賜序。",
        "from": "X75n1512_029:0253c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "X75n1512_029:0253c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古稱至治之君不世出。",
        "from": "X75n1512_029:0253c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然我宋至治。",
        "from": "X75n1512_029:0253c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖君何其盛歟。",
        "from": "X75n1512_029:0253c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔熈豐間。",
        "from": "X75n1512_029:0253c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "議者以謂我宋累聖規模絕勝漢唐之君遠甚。",
        "from": "X75n1512_029:0253c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以今觀之。",
        "from": "X75n1512_029:0253c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信哉斯言也。",
        "from": "X75n1512_029:0253c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭惟四聖御製序。",
        "from": "X75n1512_029:0253c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發揮聖藻。",
        "from": "X75n1512_029:0254a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宏闡宗乘。",
        "from": "X75n1512_029:0254a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足見　天縱妙悟得道之深。",
        "from": "X75n1512_029:0254a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而崇尚之體無過與不及。",
        "from": "X75n1512_029:0254a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡歷古以來盛帝顯王。",
        "from": "X75n1512_029:0254a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得佛法味於此盡善盡美矣。",
        "from": "X75n1512_029:0254a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其可深秘法藏而不使之廣傳。",
        "from": "X75n1512_029:0254a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同日月光明開悟含識哉。",
        "from": "X75n1512_029:0254a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是用著之終篇。",
        "from": "X75n1512_029:0254a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰師論語堯曰之意焉耳。",
        "from": "X75n1512_029:0254a05_3",
        "context_with_next_sentence": false
    }
]