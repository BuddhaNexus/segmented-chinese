[
    {
        "source_sentence": "妙吉祥平等祕密最上觀門大",
        "from": "T20n1192_005:0927c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教王經卷第五",
        "from": "T20n1192_005:0927c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋契丹國師中天竺摩竭陀國",
        "from": "T20n1192_005:0927c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏法師慈賢譯",
        "from": "T20n1192_005:0927c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是法已。",
        "from": "T20n1192_005:0927c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會中有無盡意菩薩。",
        "from": "T20n1192_005:0927c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起遶佛三匝却住一面白佛言世尊。",
        "from": "T20n1192_005:0927c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等雖已見聞。",
        "from": "T20n1192_005:0927c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾有此大粉壇作觀修行祕密之法。",
        "from": "T20n1192_005:0927c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等只依此法門而修行之。",
        "from": "T20n1192_005:0927c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復依何法而修行之。",
        "from": "T20n1192_005:0927c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告無盡意菩薩言。",
        "from": "T20n1192_005:0927c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我證菩提。",
        "from": "T20n1192_005:0927c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應受持過去諸佛同共宣說大曼拏羅壇場聖眾真言。",
        "from": "T20n1192_005:0927c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等受持速得成佛。",
        "from": "T20n1192_005:0927c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽當為汝說。",
        "from": "T20n1192_005:0927c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無盡意菩薩。",
        "from": "T20n1192_005:0927c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言。",
        "from": "T20n1192_005:0927c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊大慈為我演說我等樂聞。",
        "from": "T20n1192_005:0927c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說請吾功德無盡真言曰。",
        "from": "T20n1192_005:0927c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨(引)沒馱野(一)曩謨(引)達囉磨(二合)野(一)曩謨(引)僧(去聲)伽(去聲)野(一)曩謨(引)設枳也(二合)母曩曳(一)怛他(去聲)蘖哆野(一)囉曷(二合)帝(一)三(去聲)藐三(去聲)沒馱野(一)唵(引一)阿(入聲)弭哆鉢囉(二合)陛(一)尾補攞蘗囉陛(二合一)鉢囉(二合)嚩囉冒地薩弭(一)悉地也(二合)摩賀(引)蘖哩(二合)陛(一)覩拏覩拏(一)娑嚩(二合)賀(引)爾時世尊說是真言已。",
        "from": "T20n1192_005:0927c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告無盡意菩薩言。",
        "from": "T20n1192_005:0927c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有大乘行者。",
        "from": "T20n1192_005:0927c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建此壇場請五阿闍梨。",
        "from": "T20n1192_005:0928a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各於隨門。",
        "from": "T20n1192_005:0928a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻淨水洒塗香散時華燒酥燈。",
        "from": "T20n1192_005:0928a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸供養咸悉奉獻。",
        "from": "T20n1192_005:0928a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此密言皆一七遍。",
        "from": "T20n1192_005:0928a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復告無盡意菩薩言。",
        "from": "T20n1192_005:0928a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝應受持普請大曼拏羅壇場聖眾真言。",
        "from": "T20n1192_005:0928a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝若受持能脫惡道救諸眾生。",
        "from": "T20n1192_005:0928a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人建此壇場。",
        "from": "T20n1192_005:0928a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請五阿闍梨隨門念此真言凡獻諸供養。",
        "from": "T20n1192_005:0928a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒想諸佛眾誦此祕密言。",
        "from": "T20n1192_005:0928a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普請真言曰。",
        "from": "T20n1192_005:0928a08_6",
        "context_with_next_sentence": true
    },
    {
