[
    {
        "source_sentence": "居士傳十一",
        "from": "X88n1646_011:0202c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張洪賑張廷珪辛替否傳",
        "from": "X88n1646_011:0202c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張洪賑名普惠。",
        "from": "X88n1646_011:0202c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常山九門人。",
        "from": "X88n1646_011:0202c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其學精於三禮。",
        "from": "X88n1646_011:0202c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼善春秋百家之說。",
        "from": "X88n1646_011:0202c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仕魏為諫議大夫。",
        "from": "X88n1646_011:0202c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每朝廷有大議。",
        "from": "X88n1646_011:0202c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必據經義反覆陳論。",
        "from": "X88n1646_011:0202c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無少屈。",
        "from": "X88n1646_011:0202c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時孝明帝不親視朝。",
        "from": "X88n1646_011:0202c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郊廟之事都委有司。",
        "from": "X88n1646_011:0202c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "營造寺像略無休息。",
        "from": "X88n1646_011:0202c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪賑上書曰。",
        "from": "X88n1646_011:0202c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣聞明德卹祀。",
        "from": "X88n1646_011:0202c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成湯光六百之祚。",
        "from": "X88n1646_011:0202c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴父配天。",
        "from": "X88n1646_011:0202c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子稱周公其人也。",
        "from": "X88n1646_011:0202c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能馨香遠聞。",
        "from": "X88n1646_011:0202c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福傳遐世。",
        "from": "X88n1646_011:0202c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏惟陛下重暉纂統。",
        "from": "X88n1646_011:0202c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欽明文。",
        "from": "X88n1646_011:0202c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思天地屬心。",
        "from": "X88n1646_011:0202c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百神佇望。",
        "from": "X88n1646_011:0202c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故宜敦崇祀禮。",
        "from": "X88n1646_011:0202c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸秩無文。",
        "from": "X88n1646_011:0202c20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而告朔朝廟不親於明堂。",
        "from": "X88n1646_011:0202c21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞禘郊社多委於有司。",
        "from": "X88n1646_011:0202c21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殖不急之冥業。",
        "from": "X88n1646_011:0202c22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "損巨費於生民。",
        "from": "X88n1646_011:0202c22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "減祿削力近供無事之僧。",
        "from": "X88n1646_011:0202c22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇飾雲殿遠邀未然之報。",
        "from": "X88n1646_011:0202c23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昧爽之臣稽首於外。",
        "from": "X88n1646_011:0202c23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元寂之僧遨遊於內。",
        "from": "X88n1646_011:0202c24_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愆禮忤時。",
        "from": "X88n1646_011:0202c24_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人靈未穆。",
        "from": "X88n1646_011:0202c24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚謂從朝夕之因。",
        "from": "X88n1646_011:0202c24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求祇劫之果。",
        "from": "X88n1646_011:0203a01_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未若先萬國之歡心以事其親。",
        "from": "X88n1646_011:0203a01_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使天下和平。",
        "from": "X88n1646_011:0203a02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災害不生者也。",
        "from": "X88n1646_011:0203a02_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願淑慎威儀。",
        "from": "X88n1646_011:0203a02_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬邦作式。",
        "from": "X88n1646_011:0203a02_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躬致郊廟之虔。",
        "from": "X88n1646_011:0203a03_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親紆朔望之禮。",
        "from": "X88n1646_011:0203a03_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋奠成均。",
        "from": "X88n1646_011:0203a03_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竭心千畆。",
        "from": "X88n1646_011:0203a03_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝道可以通神明。",
        "from": "X88n1646_011:0203a04_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德教可以光四海。",
        "from": "X88n1646_011:0203a04_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則一人有慶兆民賴之。",
        "from": "X88n1646_011:0203a04_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後精進三寶。",
        "from": "X88n1646_011:0203a05_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心如來。",
        "from": "X88n1646_011:0203a05_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道由化深。",
        "from": "X88n1646_011:0203a05_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故諸漏可盡。",
        "from": "X88n1646_011:0203a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法隨禮積。",
        "from": "X88n1646_011:0203a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故彼岸可登。",
        "from": "X88n1646_011:0203a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量撤僧寺不急之奉。",
        "from": "X88n1646_011:0203a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還復百官久折之秩。",
        "from": "X88n1646_011:0203a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已興之構務從簡成。",
        "from": "X88n1646_011:0203a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將來之造權令停息。",
        "from": "X88n1646_011:0203a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶節用愛人。",
        "from": "X88n1646_011:0203a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法俗俱賴。",
        "from": "X88n1646_011:0203a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋遷尚書右丞。",
        "from": "X88n1646_011:0203a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出為東豫州刺史。",
        "from": "X88n1646_011:0203a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒諡宣恭(魏書．廣宏明集)。",
        "from": "X88n1646_011:0203a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張廷珪河南濟源人。",
        "from": "X88n1646_011:0203a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人慷慨有志節。",
        "from": "X88n1646_011:0203a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則天朝累遷監察御史。",
        "from": "X88n1646_011:0203a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長安中。",
        "from": "X88n1646_011:0203a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稅天下僧尼出錢。",
        "from": "X88n1646_011:0203a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於白司馬坂營建大佛像。",
        "from": "X88n1646_011:0203a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廷珪上疏諫曰。",
        "from": "X88n1646_011:0203a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫佛者以覺知為義。",
        "from": "X88n1646_011:0203a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因心而成。",
        "from": "X88n1646_011:0203a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以諸相見也。",
        "from": "X88n1646_011:0203a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X88n1646_011:0203a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以色見我。",
        "from": "X88n1646_011:0203a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以音聲求我。",
        "from": "X88n1646_011:0203a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人行邪道。",
        "from": "X88n1646_011:0203a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能見如來。",
        "from": "X88n1646_011:0203a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真如之果不外求也。",
        "from": "X88n1646_011:0203a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陛下信心歸依。",
        "from": "X88n1646_011:0203a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發宏誓願。",
        "from": "X88n1646_011:0203a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壯其塔廟。",
        "from": "X88n1646_011:0203a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣其尊容。",
        "from": "X88n1646_011:0203a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已徧於天下久矣。",
        "from": "X88n1646_011:0203a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖有住於相而行布施。",
        "from": "X88n1646_011:0203a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非最上第一希有之法。",
        "from": "X88n1646_011:0203a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X88n1646_011:0203a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人滿三千大千世界七寶以用布施。",
        "from": "X88n1646_011:0203a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及恒河沙等身命布施。",
        "from": "X88n1646_011:0203a18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其福甚多。",
        "from": "X88n1646_011:0203a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人於此經中受持及四句偈等為人演說。",
        "from": "X88n1646_011:0203a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其福勝彼。",
        "from": "X88n1646_011:0203a19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所言。",
        "from": "X88n1646_011:0203a19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則陛下傾四海之財。",
        "from": "X88n1646_011:0203a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殫萬人之力。",
        "from": "X88n1646_011:0203a20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮山之木以為塔。",
        "from": "X88n1646_011:0203a20_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極冶之金以為像。",
        "from": "X88n1646_011:0203a20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勞則甚矣。",
        "from": "X88n1646_011:0203a21_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "費則多矣。",
        "from": "X88n1646_011:0203a21_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而所獲福不愈於一禪房之匹夫。",
        "from": "X88n1646_011:0203a21_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩作福德不應貪著。",
        "from": "X88n1646_011:0203a22_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖有為之法不足高也。",
        "from": "X88n1646_011:0203a22_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況此營建事殷。",
        "from": "X88n1646_011:0203a23_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土木開發盤礴峻築基階。",
        "from": "X88n1646_011:0203a23_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輾壓蟲蟻動盈巨億。",
        "from": "X88n1646_011:0203a24_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈佛標坐夏之義。",
        "from": "X88n1646_011:0203a24_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍蠢動而不忍害其生哉。",
        "from": "X88n1646_011:0203a24_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又役鬼不可惟人是營。",
        "from": "X88n1646_011:0203b01_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通計工匠率多貧窶。",
        "from": "X88n1646_011:0203b01_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝驅暮役。",
        "from": "X88n1646_011:0203b02_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勞筋苦骨。",
        "from": "X88n1646_011:0203b02_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "簞食瓢飲。",
        "from": "X88n1646_011:0203b02_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨炊星飯。",
        "from": "X88n1646_011:0203b02_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢渴所致疾疹交集。",
        "from": "X88n1646_011:0203b02_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈佛標徒行之義。",
        "from": "X88n1646_011:0203b03_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍畜獸而不忍殘其力哉。",
        "from": "X88n1646_011:0203b03_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又營築之費。",
        "from": "X88n1646_011:0203b04_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧尼是稅。",
        "from": "X88n1646_011:0203b04_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖乞匄所致。",
        "from": "X88n1646_011:0203b04_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而貧闕猶多。",
        "from": "X88n1646_011:0203b04_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "州縣徵輸。",
        "from": "X88n1646_011:0203b05_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "星火逼迫。",
        "from": "X88n1646_011:0203b05_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或謀計靡所。",
        "from": "X88n1646_011:0203b05_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或鬻賣以充。",
        "from": "X88n1646_011:0203b05_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨聲載路。",
        "from": "X88n1646_011:0203b06_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和氣未洽。",
        "from": "X88n1646_011:0203b06_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈佛標隨喜之義。",
        "from": "X88n1646_011:0203b06_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍愚蒙而不忍奪其產哉。",
        "from": "X88n1646_011:0203b06_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且邊朔未寧。",
        "from": "X88n1646_011:0203b07_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍裝日給。",
        "from": "X88n1646_011:0203b07_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下虗竭。",
        "from": "X88n1646_011:0203b07_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海內勞弊。",
        "from": "X88n1646_011:0203b07_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏惟陛下慎之重之。",
        "from": "X88n1646_011:0203b08_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思菩提之行。",
        "from": "X88n1646_011:0203b08_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益一切眾生。",
        "from": "X88n1646_011:0203b08_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如是布施。",
        "from": "X88n1646_011:0203b09_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則其福德若南西北東四維上下虗空不可思量矣。",
        "from": "X88n1646_011:0203b09_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何必勤於住相。",
        "from": "X88n1646_011:0203b10_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凋蒼生之業。",
        "from": "X88n1646_011:0203b10_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇不急之務乎。",
        "from": "X88n1646_011:0203b10_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣以時政論之。",
        "from": "X88n1646_011:0203b11_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則宜先邊境。",
        "from": "X88n1646_011:0203b11_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畜府庫。",
        "from": "X88n1646_011:0203b11_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "養人力。",
        "from": "X88n1646_011:0203b11_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以釋教論之。",
        "from": "X88n1646_011:0203b12_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則宜救苦厄。",
        "from": "X88n1646_011:0203b12_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅諸相。",
        "from": "X88n1646_011:0203b12_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇無為。",
        "from": "X88n1646_011:0203b12_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏惟陛下察臣之愚。",
        "from": "X88n1646_011:0203b12_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行佛之意。",
        "from": "X88n1646_011:0203b13_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務以理為尚。",
        "from": "X88n1646_011:0203b13_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以人廢言。",
        "from": "X88n1646_011:0203b13_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸甚幸甚。",
        "from": "X88n1646_011:0203b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則天召見。",
        "from": "X88n1646_011:0203b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深慰賞之。",
        "from": "X88n1646_011:0203b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時祭酒李嶠亦言。",
        "from": "X88n1646_011:0203b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造像錢見有一十七萬餘貫。",
        "from": "X88n1646_011:0203b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若將散施貧窮人與二千。",
        "from": "X88n1646_011:0203b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濟得一十七萬餘戶。",
        "from": "X88n1646_011:0203b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拯飢寒。",
        "from": "X88n1646_011:0203b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "省勞役。",
        "from": "X88n1646_011:0203b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順諸佛慈悲之心。",
        "from": "X88n1646_011:0203b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普聖君亭育之德。",
        "from": "X88n1646_011:0203b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則神人胥悅功德無窮。",
        "from": "X88n1646_011:0203b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則天不能用。",
        "from": "X88n1646_011:0203b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開元初。",
        "from": "X88n1646_011:0203b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廷珪為禮部侍郎。",
        "from": "X88n1646_011:0203b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗應詔極論時政。",
        "from": "X88n1646_011:0203b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷黃門侍郎。",
        "from": "X88n1646_011:0203b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後以少府監致仕。",
        "from": "X88n1646_011:0203b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒年七十餘。",
        "from": "X88n1646_011:0203b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈工部尚書。",
        "from": "X88n1646_011:0203b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡貞穆(唐書)。",
        "from": "X88n1646_011:0203b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辛替否京兆萬年人。",
        "from": "X88n1646_011:0203b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景龍中官左拾遺。",
        "from": "X88n1646_011:0203b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時中宗盛興佛寺。",
        "from": "X88n1646_011:0203b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百姓勞敝。",
        "from": "X88n1646_011:0203b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帑藏耗竭。",
        "from": "X88n1646_011:0203b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "替否諫曰。",
        "from": "X88n1646_011:0203b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫釋教者以清淨為基。",
        "from": "X88n1646_011:0203b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲為主。",
        "from": "X88n1646_011:0203b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故常體道以濟物。",
        "from": "X88n1646_011:0203b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不利己以損人。",
        "from": "X88n1646_011:0203b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當去己以全真。",
        "from": "X88n1646_011:0203b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不榮身以害教。",
        "from": "X88n1646_011:0203b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X88n1646_011:0203b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩心住於法而行布施。",
        "from": "X88n1646_011:0203b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人入闇。",
        "from": "X88n1646_011:0203c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無所見。",
        "from": "X88n1646_011:0203c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠減雕琢之費以賑貧下。",
        "from": "X88n1646_011:0203c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是有如來之德。",
        "from": "X88n1646_011:0203c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息穿掘之苦以全昆蟲。",
        "from": "X88n1646_011:0203c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是有如來之仁。",
        "from": "X88n1646_011:0203c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陛下緩其所急。",
        "from": "X88n1646_011:0203c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急其所緩。",
        "from": "X88n1646_011:0203c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失真實而冀虗無。",
        "from": "X88n1646_011:0203c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣竊痛之。",
        "from": "X88n1646_011:0203c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既奏不納。",
        "from": "X88n1646_011:0203c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "睿宗朝切論時政。",
        "from": "X88n1646_011:0203c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷右臺殿中侍御史。",
        "from": "X88n1646_011:0203c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天寶初卒(唐書)。",
        "from": "X88n1646_011:0203c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_011:0203c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經言。",
        "from": "X88n1646_011:0203c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩隨順眾生。",
        "from": "X88n1646_011:0203c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為隨順供養諸佛。",
        "from": "X88n1646_011:0203c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於眾生尊重承事。",
        "from": "X88n1646_011:0203c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為尊重承事如來。",
        "from": "X88n1646_011:0203c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_011:0203c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來以大悲心而為體故。",
        "from": "X88n1646_011:0203c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "季世之君。",
        "from": "X88n1646_011:0203c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重斂黷兵。",
        "from": "X88n1646_011:0203c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殘民以逞。",
        "from": "X88n1646_011:0203c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃欲窮土木之工。",
        "from": "X88n1646_011:0203c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耀金玉之飾。",
        "from": "X88n1646_011:0203c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以希福報。",
        "from": "X88n1646_011:0203c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖重愆不亦闊乎。",
        "from": "X88n1646_011:0203c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善乎孟子之言曰。",
        "from": "X88n1646_011:0203c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行一不義。",
        "from": "X88n1646_011:0203c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺一不辜。",
        "from": "X88n1646_011:0203c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得天下。",
        "from": "X88n1646_011:0203c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有不為也。",
        "from": "X88n1646_011:0203c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯可語於淨戒矣。",
        "from": "X88n1646_011:0203c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書亦有之。",
        "from": "X88n1646_011:0203c11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夫不獲。",
        "from": "X88n1646_011:0203c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時予之辜。",
        "from": "X88n1646_011:0203c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩所為。",
        "from": "X88n1646_011:0203c12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度盡眾生方成佛道也。",
        "from": "X88n1646_011:0203c12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張辛諸賢。",
        "from": "X88n1646_011:0203c13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實有見於是。",
        "from": "X88n1646_011:0203c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錄其言。",
        "from": "X88n1646_011:0203c13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有國君子可",
        "from": "X88n1646_011:0203c13_29",
        "context_with_next_sentence": false
    }
]