[
    {
        "source_sentence": "靈竺淨慈自得禪師錄卷第五",
        "from": "X72n1428_005:0146b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師初參見天童宏智禪師。",
        "from": "X72n1428_005:0146b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰如何是舌上妙味。",
        "from": "X72n1428_005:0146b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智曰此是甘露門。",
        "from": "X72n1428_005:0146b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰還出入否。",
        "from": "X72n1428_005:0146b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智曰來往不遮。",
        "from": "X72n1428_005:0146b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰為甚在人人口中。",
        "from": "X72n1428_005:0146b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智曰見聞之妙超彼聲色。",
        "from": "X72n1428_005:0146b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師便禮拜。",
        "from": "X72n1428_005:0146b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智曰近日離何處。",
        "from": "X72n1428_005:0146b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰和尚不知乎。",
        "from": "X72n1428_005:0146b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智曰且在這裡談話。",
        "from": "X72n1428_005:0146b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師便歸客位。",
        "from": "X72n1428_005:0146b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自此依止十七年。",
        "from": "X72n1428_005:0146b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從天童至長蘆而請師主首座。",
        "from": "X72n1428_005:0146b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾皆異之矣。",
        "from": "X72n1428_005:0146b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到徑山見了和尚。",
        "from": "X72n1428_005:0146b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰井底蝦蟆吞却月。",
        "from": "X72n1428_005:0146b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三更不借夜明簾。",
        "from": "X72n1428_005:0146b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意旨如何。",
        "from": "X72n1428_005:0146b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了曰你還體得麼。",
        "from": "X72n1428_005:0146b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1428_005:0146b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾是所生身。",
        "from": "X72n1428_005:0146b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爭怪得和尚。",
        "from": "X72n1428_005:0146b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了曰親見作家來。",
        "from": "X72n1428_005:0146b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師便作禮。",
        "from": "X72n1428_005:0146b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了曰今日始逢人毒手。",
        "from": "X72n1428_005:0146b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到大洪見顯和尚。",
        "from": "X72n1428_005:0146b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X72n1428_005:0146b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從上諸聖未曾為人說著。",
        "from": "X72n1428_005:0146b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚又作麼生。",
        "from": "X72n1428_005:0146b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯曰老僧又恁麼。",
        "from": "X72n1428_005:0146b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰柰何這箇。",
        "from": "X72n1428_005:0146b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯曰任嫌著。",
        "from": "X72n1428_005:0146b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1428_005:0146b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是。",
        "from": "X72n1428_005:0146b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學人見伊無分乎。",
        "from": "X72n1428_005:0146b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯曰且坐而喫茶。",
        "from": "X72n1428_005:0146b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰什麼心行。",
        "from": "X72n1428_005:0146b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯呵呵大笑。",
        "from": "X72n1428_005:0146b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃作禮。",
        "from": "X72n1428_005:0146b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到石門見聰和尚。",
        "from": "X72n1428_005:0146b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X72n1428_005:0146b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至一氣以後。",
        "from": "X72n1428_005:0146b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而機前承當時如何。",
        "from": "X72n1428_005:0146b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聰曰蹉過了也。",
        "from": "X72n1428_005:0146b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1428_005:0146b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚蹉過。",
        "from": "X72n1428_005:0146b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "某甲蹉過乎。",
        "from": "X72n1428_005:0146b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聰曰老僧罪過。",
        "from": "X72n1428_005:0146b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師便禮拜。",
        "from": "X72n1428_005:0146b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聰曰他不受人禮。",
        "from": "X72n1428_005:0146b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰道什麼。",
        "from": "X72n1428_005:0146b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聰笑然矣。",
        "from": "X72n1428_005:0146b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到雲居見西和尚。",
        "from": "X72n1428_005:0146c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰某甲兼聞和尚不會禪是也否。",
        "from": "X72n1428_005:0146c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居曰是。",
        "from": "X72n1428_005:0146c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰為什麼不會。",
        "from": "X72n1428_005:0146c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居默然。",
        "from": "X72n1428_005:0146c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃歸知客寮。",
        "from": "X72n1428_005:0146c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西令侍者送偈曰。",
        "from": "X72n1428_005:0146c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲居不會禪。",
        "from": "X72n1428_005:0146c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗足上床眠。",
        "from": "X72n1428_005:0146c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺枕子落。",
        "from": "X72n1428_005:0146c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "打破常住甎。",
        "from": "X72n1428_005:0146c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師開見乃有答偈曰。",
        "from": "X72n1428_005:0146c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚不知禪。",
        "from": "X72n1428_005:0146c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "困來便打眠。",
        "from": "X72n1428_005:0146c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泥牛喫水草。",
        "from": "X72n1428_005:0146c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木馬咬瓦甎。",
        "from": "X72n1428_005:0146c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者持偈呈西。",
        "from": "X72n1428_005:0146c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西曰是什麼。",
        "from": "X72n1428_005:0146c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者擬開口。",
        "from": "X72n1428_005:0146c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西乃打。",
        "from": "X72n1428_005:0146c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者於此忽然大悟。",
        "from": "X72n1428_005:0146c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師聞得曰。",
        "from": "X72n1428_005:0146c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可惜痛棒放過。",
        "from": "X72n1428_005:0146c07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到蔣山見照和尚。",
        "from": "X72n1428_005:0146c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X72n1428_005:0146c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了無悟法。",
        "from": "X72n1428_005:0146c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為什麼有付受。",
        "from": "X72n1428_005:0146c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山曰無悟法故。",
        "from": "X72n1428_005:0146c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰落在什麼處。",
        "from": "X72n1428_005:0146c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山曰喫茶去。",
        "from": "X72n1428_005:0146c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰猶不逃金鎻之難。",
        "from": "X72n1428_005:0146c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山乃休。",
        "from": "X72n1428_005:0146c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃作禮。",
        "from": "X72n1428_005:0146c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到法雲見仙和尚。",
        "from": "X72n1428_005:0146c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仙曰何處來。",
        "from": "X72n1428_005:0146c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰自足下來。",
        "from": "X72n1428_005:0146c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仙曰足下多少人。",
        "from": "X72n1428_005:0146c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師作蹈勢。",
        "from": "X72n1428_005:0146c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仙曰蹉過也不知。",
        "from": "X72n1428_005:0146c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰果然果然。",
        "from": "X72n1428_005:0146c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到夾山見勤和尚。",
        "from": "X72n1428_005:0146c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X72n1428_005:0146c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚得臨濟佛法至今住此山。",
        "from": "X72n1428_005:0146c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是自家底眼。",
        "from": "X72n1428_005:0146c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤和聲而便喝。",
        "from": "X72n1428_005:0146c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰某甲被和尚一喝。",
        "from": "X72n1428_005:0146c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤曰見何人來。",
        "from": "X72n1428_005:0146c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰天童覺和尚。",
        "from": "X72n1428_005:0146c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤曰恁麼不作家。",
        "from": "X72n1428_005:0146c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師又和聲乃喝。",
        "from": "X72n1428_005:0146c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤曰。",
        "from": "X72n1428_005:0146c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真獅子兒。",
        "from": "X72n1428_005:0146c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能獅子吼。",
        "from": "X72n1428_005:0146c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師拂袖出去。",
        "from": "X72n1428_005:0146c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到雪峯見如和尚。",
        "from": "X72n1428_005:0146c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如曰來往客何處來。",
        "from": "X72n1428_005:0146c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰自天童來。",
        "from": "X72n1428_005:0146c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如曰將得何物來。",
        "from": "X72n1428_005:0146c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師揖曰看。",
        "from": "X72n1428_005:0146c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如曰勘破了也。",
        "from": "X72n1428_005:0146c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰露露。",
        "from": "X72n1428_005:0146c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如打掌曰草賊大敗。",
        "from": "X72n1428_005:0146c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰是老賊。",
        "from": "X72n1428_005:0146c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如曰天童有何言句示徒。",
        "from": "X72n1428_005:0146c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰和尚又如何。",
        "from": "X72n1428_005:0146c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如曰賊心未除。",
        "from": "X72n1428_005:0146c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰果然果然。",
        "from": "X72n1428_005:0146c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如曰還吾一句子來。",
        "from": "X72n1428_005:0146c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師便作禮。",
        "from": "X72n1428_005:0146c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到靈隱見性和尚。",
        "from": "X72n1428_005:0146c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰如何是洞上家傳。",
        "from": "X72n1428_005:0146c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性曰。",
        "from": "X72n1428_005:0146c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏正曾不離本位。",
        "from": "X72n1428_005:0147a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生豈涉語因緣。",
        "from": "X72n1428_005:0147a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1428_005:0147a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是傍參邊事。",
        "from": "X72n1428_005:0147a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是向上一句。",
        "from": "X72n1428_005:0147a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性曰不見異類中行耶。",
        "from": "X72n1428_005:0147a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃作禮。",
        "from": "X72n1428_005:0147a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性曰不是異類中行麼。",
        "from": "X72n1428_005:0147a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃微笑而去。",
        "from": "X72n1428_005:0147a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性曰且在這裡喫茶著。",
        "from": "X72n1428_005:0147a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到育王見禪和尚。",
        "from": "X72n1428_005:0147a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪曰近離何處。",
        "from": "X72n1428_005:0147a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰靈隱。",
        "from": "X72n1428_005:0147a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪曰還見性禪師麼。",
        "from": "X72n1428_005:0147a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師舉前話。",
        "from": "X72n1428_005:0147a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪曰。",
        "from": "X72n1428_005:0147a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回互宛轉則不無。",
        "from": "X72n1428_005:0147a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老僧常用箇手段。",
        "from": "X72n1428_005:0147a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別有人不肯。",
        "from": "X72n1428_005:0147a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰是何人。",
        "from": "X72n1428_005:0147a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪擬開口。",
        "from": "X72n1428_005:0147a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰早是外人。",
        "from": "X72n1428_005:0147a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪不覺吐舌。",
        "from": "X72n1428_005:0147a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰請和尚一兩則。",
        "from": "X72n1428_005:0147a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪曰逢知音稀。",
        "from": "X72n1428_005:0147a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1428_005:0147a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有人問。",
        "from": "X72n1428_005:0147a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚如何祗對。",
        "from": "X72n1428_005:0147a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪默然。",
        "from": "X72n1428_005:0147a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃禮拜。",
        "from": "X72n1428_005:0147a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到金山見青和尚。",
        "from": "X72n1428_005:0147a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰如何是祖師西來意。",
        "from": "X72n1428_005:0147a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青曰此是祖師西來意。",
        "from": "X72n1428_005:0147a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰別有一句也否。",
        "from": "X72n1428_005:0147a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青曰莫妄想。",
        "from": "X72n1428_005:0147a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰慚愧。",
        "from": "X72n1428_005:0147a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青曰少林妙訣何人受傳來。",
        "from": "X72n1428_005:0147a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰不墮教經者。",
        "from": "X72n1428_005:0147a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青曰你又如何。",
        "from": "X72n1428_005:0147a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰此是功行之事。",
        "from": "X72n1428_005:0147a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青曰是是。",
        "from": "X72n1428_005:0147a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰謝答話。",
        "from": "X72n1428_005:0147a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到雲蓋見靈和尚。",
        "from": "X72n1428_005:0147a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈曰何處僧。",
        "from": "X72n1428_005:0147a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰近離金山。",
        "from": "X72n1428_005:0147a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈曰金山法道如何。",
        "from": "X72n1428_005:0147a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師展開兩手。",
        "from": "X72n1428_005:0147a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈曰是什麼消息。",
        "from": "X72n1428_005:0147a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師揖曰和尚不知字。",
        "from": "X72n1428_005:0147a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈曰謝你箇答話。",
        "from": "X72n1428_005:0147a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1428_005:0147a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謝即不無。",
        "from": "X72n1428_005:0147a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爭柰那箇何。",
        "from": "X72n1428_005:0147a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈曰將得那箇來麼。",
        "from": "X72n1428_005:0147a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師澄然去。",
        "from": "X72n1428_005:0147a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈曰不是不是。",
        "from": "X72n1428_005:0147a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師再不言。",
        "from": "X72n1428_005:0147a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到開福見寧和尚。",
        "from": "X72n1428_005:0147a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰如何是父母未生前本來面目。",
        "from": "X72n1428_005:0147a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧曰你是禪和子。",
        "from": "X72n1428_005:0147a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰是什麼用處。",
        "from": "X72n1428_005:0147a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧曰堦下有盤石一片。",
        "from": "X72n1428_005:0147a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃作禮。",
        "from": "X72n1428_005:0147a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧曰侍者點茶來與尊賓。",
        "from": "X72n1428_005:0147a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師和聲乃喝。",
        "from": "X72n1428_005:0147a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧曰。",
        "from": "X72n1428_005:0147a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用賊為什麼。",
        "from": "X72n1428_005:0147a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須喫茶去。",
        "from": "X72n1428_005:0147a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰某甲罪過。",
        "from": "X72n1428_005:0147a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧乃歸方丈。",
        "from": "X72n1428_005:0147b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到大慈見翌和尚。",
        "from": "X72n1428_005:0147b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翌見師來面壁而坐。",
        "from": "X72n1428_005:0147b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃打侍者三掌。",
        "from": "X72n1428_005:0147b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者呵呵大笑。",
        "from": "X72n1428_005:0147b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰見與師齊減師半德。",
        "from": "X72n1428_005:0147b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智過師方堪傳授。",
        "from": "X72n1428_005:0147b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其問甚諦當。",
        "from": "X72n1428_005:0147b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者無語。",
        "from": "X72n1428_005:0147b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翌回首。",
        "from": "X72n1428_005:0147b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰龍頭蛇尾漢。",
        "from": "X72n1428_005:0147b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翌曰。",
        "from": "X72n1428_005:0147b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然與麼。",
        "from": "X72n1428_005:0147b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子細商量。",
        "from": "X72n1428_005:0147b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰一見更不用再見。",
        "from": "X72n1428_005:0147b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翌曰太麤生。",
        "from": "X72n1428_005:0147b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰和尚又如何。",
        "from": "X72n1428_005:0147b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翌良久。",
        "from": "X72n1428_005:0147b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師推倒出去。",
        "from": "X72n1428_005:0147b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翌曰三十年來未曾逢如是作家。",
        "from": "X72n1428_005:0147b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到百丈見明和尚。",
        "from": "X72n1428_005:0147b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰。",
        "from": "X72n1428_005:0147b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此山嶮峻無人到。",
        "from": "X72n1428_005:0147b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子為什麼得到。",
        "from": "X72n1428_005:0147b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰三千里外知有和尚故來而已。",
        "from": "X72n1428_005:0147b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰把茅蓋頭老僧用底。",
        "from": "X72n1428_005:0147b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰恐是尚掛唇吻。",
        "from": "X72n1428_005:0147b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰錯。",
        "from": "X72n1428_005:0147b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰和尚慈悲許一句。",
        "from": "X72n1428_005:0147b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰錯。",
        "from": "X72n1428_005:0147b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰錯錯。",
        "from": "X72n1428_005:0147b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明乃歸方丈。",
        "from": "X72n1428_005:0147b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃出去。",
        "from": "X72n1428_005:0147b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明又令侍者曰。",
        "from": "X72n1428_005:0147b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日稍晚矣且留一宿。",
        "from": "X72n1428_005:0147b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰還許一句也否。",
        "from": "X72n1428_005:0147b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃出去。",
        "from": "X72n1428_005:0147b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到天台見慈和尚。",
        "from": "X72n1428_005:0147b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈曰何處來。",
        "from": "X72n1428_005:0147b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰百丈來。",
        "from": "X72n1428_005:0147b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈曰謝你遠來。",
        "from": "X72n1428_005:0147b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰非遠近底事如何。",
        "from": "X72n1428_005:0147b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈乃喝。",
        "from": "X72n1428_005:0147b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰落在什麼處。",
        "from": "X72n1428_005:0147b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈又喝。",
        "from": "X72n1428_005:0147b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃喝。",
        "from": "X72n1428_005:0147b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈曰甚是作家。",
        "from": "X72n1428_005:0147b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰壓良莫成賤。",
        "from": "X72n1428_005:0147b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈曰仰之彌高鑽之彌堅。",
        "from": "X72n1428_005:0147b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰謝和尚印可。",
        "from": "X72n1428_005:0147b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈曰正是實語。",
        "from": "X72n1428_005:0147b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到五臺禮文殊。",
        "from": "X72n1428_005:0147b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有院主問。",
        "from": "X72n1428_005:0147b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上坐為禮他。",
        "from": "X72n1428_005:0147b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為禮自乎。",
        "from": "X72n1428_005:0147b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃禮文殊。",
        "from": "X72n1428_005:0147b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主呵呵大笑。",
        "from": "X72n1428_005:0147b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師以坐具劈面擲。",
        "from": "X72n1428_005:0147b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主吐舌驚。",
        "from": "X72n1428_005:0147b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰不丈夫。",
        "from": "X72n1428_005:0147b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主乃作禮。",
        "from": "X72n1428_005:0147b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰不丈夫。",
        "from": "X72n1428_005:0147b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主休去。",
        "from": "X72n1428_005:0147b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃去。",
        "from": "X72n1428_005:0147b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到峩嵋禮普賢。",
        "from": "X72n1428_005:0147b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有院主問何處來。",
        "from": "X72n1428_005:0147b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰五臺來。",
        "from": "X72n1428_005:0147b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主曰太高生太高生。",
        "from": "X72n1428_005:0147b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰爭敢辭勞。",
        "from": "X72n1428_005:0147b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主曰行脚多少時。",
        "from": "X72n1428_005:0147b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰五年。",
        "from": "X72n1428_005:0147c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主曰不關往來是什麼物。",
        "from": "X72n1428_005:0147c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師以掌打院主面。",
        "from": "X72n1428_005:0147c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主微笑。",
        "from": "X72n1428_005:0147c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃休。",
        "from": "X72n1428_005:0147c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到補陀岩禮觀音。",
        "from": "X72n1428_005:0147c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有院主問近離何處。",
        "from": "X72n1428_005:0147c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰峨嵋往來之客。",
        "from": "X72n1428_005:0147c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主曰峨嵋還有普賢麼。",
        "from": "X72n1428_005:0147c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰面目堂堂。",
        "from": "X72n1428_005:0147c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主曰年多少。",
        "from": "X72n1428_005:0147c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰被院主一問通身汗流。",
        "from": "X72n1428_005:0147c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主迎師歸院令宿。",
        "from": "X72n1428_005:0147c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰院主參見何人來。",
        "from": "X72n1428_005:0147c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主曰吾曾見佛果和尚來。",
        "from": "X72n1428_005:0147c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰親參見作家。",
        "from": "X72n1428_005:0147c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主曰如何是作家手段。",
        "from": "X72n1428_005:0147c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃打院主。",
        "from": "X72n1428_005:0147c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主乃作禮。",
        "from": "X72n1428_005:0147c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師又打院主曰。",
        "from": "X72n1428_005:0147c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一十三年住此山。",
        "from": "X72n1428_005:0147c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾逢正師。",
        "from": "X72n1428_005:0147c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日始逢作家。",
        "from": "X72n1428_005:0147c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到一庵主處。",
        "from": "X72n1428_005:0147c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主問曰來來去去作什麼。",
        "from": "X72n1428_005:0147c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰蹈著庵主鼻孔來。",
        "from": "X72n1428_005:0147c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰老僧鼻孔如何蹈著。",
        "from": "X72n1428_005:0147c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃與一掌。",
        "from": "X72n1428_005:0147c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主乃喝。",
        "from": "X72n1428_005:0147c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰瞎漢。",
        "from": "X72n1428_005:0147c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰慚愧。",
        "from": "X72n1428_005:0147c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃問訊。",
        "from": "X72n1428_005:0147c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到峯庵主處。",
        "from": "X72n1428_005:0147c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰。",
        "from": "X72n1428_005:0147c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老僧夢見參洞下大尊宿。",
        "from": "X72n1428_005:0147c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正當昨夜子時也。",
        "from": "X72n1428_005:0147c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今朝見上座子甚奇怪。",
        "from": "X72n1428_005:0147c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰癡人面前莫原夢。",
        "from": "X72n1428_005:0147c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰原看原看。",
        "from": "X72n1428_005:0147c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃展開兩手。",
        "from": "X72n1428_005:0147c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰如是如是。",
        "from": "X72n1428_005:0147c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到瑩庵主處。",
        "from": "X72n1428_005:0147c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰和尚何不出世。",
        "from": "X72n1428_005:0147c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰老僧不用出不出邊事。",
        "from": "X72n1428_005:0147c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰如何是向上玄路。",
        "from": "X72n1428_005:0147c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰千聖也道不得。",
        "from": "X72n1428_005:0147c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃作禮而去。",
        "from": "X72n1428_005:0147c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到義庵主處。",
        "from": "X72n1428_005:0147c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰如何是庵中主人公。",
        "from": "X72n1428_005:0147c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主揖曰坐客位。",
        "from": "X72n1428_005:0147c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰今日始逢衲子。",
        "from": "X72n1428_005:0147c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰你作什麼來。",
        "from": "X72n1428_005:0147c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰一物不將來。",
        "from": "X72n1428_005:0147c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰這箇[斬/耳]。",
        "from": "X72n1428_005:0147c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乃休。",
        "from": "X72n1428_005:0147c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰喫茶去。",
        "from": "X72n1428_005:0147c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師因到捿庵主處。",
        "from": "X72n1428_005:0147c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰淨慈雲眾久望師來。",
        "from": "X72n1428_005:0147c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未請主宰。",
        "from": "X72n1428_005:0147c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰何故如是。",
        "from": "X72n1428_005:0147c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰長蘆了和尚．天童覺和尚兩員古佛共作證明故。",
        "from": "X72n1428_005:0147c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1428_005:0148a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾五年間得二師授記。",
        "from": "X72n1428_005:0148a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行脚而已未曾疑著。",
        "from": "X72n1428_005:0148a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰和尚早歸天童。",
        "from": "X72n1428_005:0148a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若歸便得淨慈請主。",
        "from": "X72n1428_005:0148a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰到也只客邊事。",
        "from": "X72n1428_005:0148a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰主事又如何。",
        "from": "X72n1428_005:0148a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師良久。",
        "from": "X72n1428_005:0148a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主曰猶是兒孫邊。",
        "from": "X72n1428_005:0148a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰果然。",
        "from": "X72n1428_005:0148a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主乃作禮。",
        "from": "X72n1428_005:0148a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈竺淨慈自得禪師錄卷第五",
        "from": "X72n1428_005:0148a06_0",
        "context_with_next_sentence": false
    }
]