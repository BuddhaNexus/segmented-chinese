[
    {
        "source_sentence": "大佛略懺一卷",
        "from": "T85n2841_001:1293c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫欲禮懺必須先敬三寶。",
        "from": "T85n2841_001:1293c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以然者。",
        "from": "T85n2841_001:1293c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三寶即是一切眾生良支福田。",
        "from": "T85n2841_001:1293c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能歸向者。",
        "from": "T85n2841_001:1293c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則滅無量罪。",
        "from": "T85n2841_001:1293c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長無量福。",
        "from": "T85n2841_001:1293c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能會行者。",
        "from": "T85n2841_001:1293c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離生死故得解脫樂。",
        "from": "T85n2841_001:1293c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故弟子某甲等歸依十方盡虛空界一切諸佛。",
        "from": "T85n2841_001:1293c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依十方盡虛空界一切尊法。",
        "from": "T85n2841_001:1293c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依十方盡虛空界一切聖僧弟子。",
        "from": "T85n2841_001:1293c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日所以懺悔者。",
        "from": "T85n2841_001:1293c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正言無始以來在凡夫地莫問貴賤罪次無量。",
        "from": "T85n2841_001:1293c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因三業而生罪。",
        "from": "T85n2841_001:1293c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因六相而起過。",
        "from": "T85n2841_001:1293c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以自邪思惟。",
        "from": "T85n2841_001:1294a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或藉外境起於染著。",
        "from": "T85n2841_001:1294a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃之十惡增長八萬千諸塵門牢。",
        "from": "T85n2841_001:1294a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其罪相雖復無量大而語為不出有三。",
        "from": "T85n2841_001:1294a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為三。",
        "from": "T85n2841_001:1294a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者煩惱。",
        "from": "T85n2841_001:1294a03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者是業。",
        "from": "T85n2841_001:1294a04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三是果報。",
        "from": "T85n2841_001:1294a04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三種法能障聖道及以人天晙妙好事。",
        "from": "T85n2841_001:1294a04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經中目為三障。",
        "from": "T85n2841_001:1294a05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以諸佛菩薩教依方便懺悔除滅此三滅者。",
        "from": "T85n2841_001:1294a06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則六根十惡乃至八萬四千諸塵牢門皆悉清淨。",
        "from": "T85n2841_001:1294a07_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故弟子今日運此增上晙心懺悔三欲滅。",
        "from": "T85n2841_001:1294a08_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三罪者當用何等心可令此罪滅待。",
        "from": "T85n2841_001:1294a09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當興七種心以為方便。",
        "from": "T85n2841_001:1294a10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其此罪乃可得滅。",
        "from": "T85n2841_001:1294a10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為七。",
        "from": "T85n2841_001:1294a11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者慚愧。",
        "from": "T85n2841_001:1294a11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者恐怖。",
        "from": "T85n2841_001:1294a11_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者厭離。",
        "from": "T85n2841_001:1294a11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者發菩提心。",
        "from": "T85n2841_001:1294a12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者怨親平等。",
        "from": "T85n2841_001:1294a12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者念報佛恩。",
        "from": "T85n2841_001:1294a12_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者觀罪性定。",
        "from": "T85n2841_001:1294a13_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一慚愧者。",
        "from": "T85n2841_001:1294a13_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自強我與釋迦如來同為凡夫。",
        "from": "T85n2841_001:1294a13_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今世尊成道以來已經爾所塵沙劫數。",
        "from": "T85n2841_001:1294a14_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我等相與耽染六塵流浪生死永無出。",
        "from": "T85n2841_001:1294a15_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其此寶天下可慚可愧。",
        "from": "T85n2841_001:1294a16_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可著可恥。",
        "from": "T85n2841_001:1294a17_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二恐怖者。",
        "from": "T85n2841_001:1294a17_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既是凡夫身口意業常與罪相應。",
        "from": "T85n2841_001:1294a17_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣命終之後應墮地獄畜生餓鬼受無量苦。",
        "from": "T85n2841_001:1294a18_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此實為可驚可恐可怖可懼。",
        "from": "T85n2841_001:1294a19_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三厭離者。",
        "from": "T85n2841_001:1294a20_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相以當觀生死之中唯有無常苦空無我不淨。",
        "from": "T85n2841_001:1294a20_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假如水上泡速起速滅流轉猶若車輪。",
        "from": "T85n2841_001:1294a21_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生老病死八苦交煎無時慚息。",
        "from": "T85n2841_001:1294a22_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾等相與但觀自身從頭至足。",
        "from": "T85n2841_001:1294a23_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中但有三十六物。",
        "from": "T85n2841_001:1294a23_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮毛爪齒膿囊涕唾生熟二藏大膓小膓脾腎心肺肝膽□唱肪膏膜腦筋骨髓大小便利九孔常流。",
        "from": "T85n2841_001:1294a24_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經言。",
        "from": "T85n2841_001:1294a26_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此身眾苦所集。",
        "from": "T85n2841_001:1294a26_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆不淨。",
        "from": "T85n2841_001:1294a27_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有慧者而當樂此身。",
        "from": "T85n2841_001:1294a27_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死既有而此種種惡法甚可患厭。",
        "from": "T85n2841_001:1294a28_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四發菩提心者。",
        "from": "T85n2841_001:1294a28_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經言。",
        "from": "T85n2841_001:1294a29_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂佛身者即法身也。",
        "from": "T85n2841_001:1294a29_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無量功德智慧生。",
        "from": "T85n2841_001:1294a29_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從六波羅蜜生。",
        "from": "T85n2841_001:1294b01_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從慈悲喜捨生。",
        "from": "T85n2841_001:1294b01_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世七助菩提法生。",
        "from": "T85n2841_001:1294b02_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從如是等種種功德知慧生。",
        "from": "T85n2841_001:1294b02_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來身欲得佛身當發菩提心。",
        "from": "T85n2841_001:1294b03_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求一切種知常樂我淨薩婆若果。",
        "from": "T85n2841_001:1294b03_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨佛國土成就眾生。",
        "from": "T85n2841_001:1294b04_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於身命財無所憐惜。",
        "from": "T85n2841_001:1294b05_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五怨親平等者。",
        "from": "T85n2841_001:1294b05_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切眾生起慈悲。",
        "from": "T85n2841_001:1294b06_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無彼我相。",
        "from": "T85n2841_001:1294b06_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2841_001:1294b06_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾若見怨親即是分別。",
        "from": "T85n2841_001:1294b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以分別故起諸相著。",
        "from": "T85n2841_001:1294b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相著因緣生諸煩惱。",
        "from": "T85n2841_001:1294b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣造諸惡業。",
        "from": "T85n2841_001:1294b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡業因緣故得苦果。",
        "from": "T85n2841_001:1294b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六念報佛恩者。",
        "from": "T85n2841_001:1294b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來往昔無量劫中。",
        "from": "T85n2841_001:1294b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨頭目髓腦支節手足國域妻子象馬七珍。",
        "from": "T85n2841_001:1294b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我等故修諸苦行。",
        "from": "T85n2841_001:1294b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此恩此德實難酬報。",
        "from": "T85n2841_001:1294b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經言。",
        "from": "T85n2841_001:1294b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以頂戴兩肩符負於恒河沙劫亦不能報。",
        "from": "T85n2841_001:1294b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等欲報如來恩者。",
        "from": "T85n2841_001:1294b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於此世象猛精進得勞忍苦。",
        "from": "T85n2841_001:1294b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惜身命建立三寶。",
        "from": "T85n2841_001:1294b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛通大乘廣化眾生同入正道。",
        "from": "T85n2841_001:1294b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七觀罪性空者。",
        "from": "T85n2841_001:1294b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有實相。",
        "from": "T85n2841_001:1294b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從因緣生。",
        "from": "T85n2841_001:1294b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒而有。",
        "from": "T85n2841_001:1294b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既從因緣而則可從因緣而滅。",
        "from": "T85n2841_001:1294b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從因緣而生者。",
        "from": "T85n2841_001:1294b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "押近惡友造作無端。",
        "from": "T85n2841_001:1294b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從因緣而滅者。",
        "from": "T85n2841_001:1294b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是今因沈心懺悔。",
        "from": "T85n2841_001:1294b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經言。",
        "from": "T85n2841_001:1294b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此罪相不在內。",
        "from": "T85n2841_001:1294b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不在中間。",
        "from": "T85n2841_001:1294b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故諸此罪從本是空生。",
        "from": "T85n2841_001:1294b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來等七種心已如緣相。",
        "from": "T85n2841_001:1294b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛賢聖擎拳合掌彼陳至到慚愧。",
        "from": "T85n2841_001:1294b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改革舒歷心肝洗蕩膓胃。",
        "from": "T85n2841_001:1294b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此懺悔亦何罪而不滅。",
        "from": "T85n2841_001:1294b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦何障而不消。",
        "from": "T85n2841_001:1294b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復正爾攸攸緩緩情虛往自勞形。",
        "from": "T85n2841_001:1294b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是何蓋。",
        "from": "T85n2841_001:1294b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且復人命無常喻如轉燭一息不還。",
        "from": "T85n2841_001:1294b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便向灰讓三塗苦報。",
        "from": "T85n2841_001:1294b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即身應受可錢財寶貨促計求脫。",
        "from": "T85n2841_001:1294b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窈窈冥冥恩赦無期。",
        "from": "T85n2841_001:1294b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨嬰此苦無受仗者。",
        "from": "T85n2841_001:1294b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫言我今生中無有此罪。",
        "from": "T85n2841_001:1294b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以不能墾到懺悔。",
        "from": "T85n2841_001:1294b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經中道言。",
        "from": "T85n2841_001:1294b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫之舉足動步無非是罪。",
        "from": "T85n2841_001:1294b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復過生中皆悉成就無量惡業追逐行者。",
        "from": "T85n2841_001:1294b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如影隨形。",
        "from": "T85n2841_001:1294c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不慚愧罪惡日深。",
        "from": "T85n2841_001:1294c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故苞藏癡疵。",
        "from": "T85n2841_001:1294c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教不許說悔先罪。",
        "from": "T85n2841_001:1294c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名所尚故智長淪苦海。",
        "from": "T85n2841_001:1294c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是由隱覆。",
        "from": "T85n2841_001:1294c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故弟子今日發露懺悔法。",
        "from": "T85n2841_001:1294c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更相由藉因煩惱故以起惡業。",
        "from": "T85n2841_001:1294c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡業因緣故得果苦。",
        "from": "T85n2841_001:1294c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故弟子今日至心第一。",
        "from": "T85n2841_001:1294c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應懺悔煩惱障。",
        "from": "T85n2841_001:1294c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此煩惱諸佛菩薩入理聖人種種呵責。",
        "from": "T85n2841_001:1294c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦招此煩惱以為怨家。",
        "from": "T85n2841_001:1294c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故。",
        "from": "T85n2841_001:1294c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能斷眾生慧命根故。",
        "from": "T85n2841_001:1294c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦招此煩惱瀑河能漂眾生入於生死大苦海故。",
        "from": "T85n2841_001:1294c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦招此煩惱以為羈鎖能繫眾生於生死獄不能得出故。",
        "from": "T85n2841_001:1294c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使以六道牽連死生不絕惡業無窮苦不息。",
        "from": "T85n2841_001:1294c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知。",
        "from": "T85n2841_001:1294c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是煩惱過患。",
        "from": "T85n2841_001:1294c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故弟子今日此增上善心歸依佛。",
        "from": "T85n2841_001:1294c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是十方盡虛空界一切三寶。",
        "from": "T85n2841_001:1294c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子從自無始如來至于今日。",
        "from": "T85n2841_001:1294c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在人天受報。",
        "from": "T85n2841_001:1294c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此心識常懷愚。",
        "from": "T85n2841_001:1294c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或繁滿胸衿。",
        "from": "T85n2841_001:1294c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因三毒相造一切罪。",
        "from": "T85n2841_001:1294c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因三漏造一切罪因。",
        "from": "T85n2841_001:1294c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或膺造一切罪。",
        "from": "T85n2841_001:1294c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因受造一切罪。",
        "from": "T85n2841_001:1294c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因三苦造一切罪。",
        "from": "T85n2841_001:1294c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因三假造一切罪。",
        "from": "T85n2841_001:1294c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因貪三有造一切罪。",
        "from": "T85n2841_001:1294c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等罪無量無邊惱亂一切六道四生。",
        "from": "T85n2841_001:1294c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今慚愧皆悉懺悔。",
        "from": "T85n2841_001:1294c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又弟子無始以來至於今日。",
        "from": "T85n2841_001:1294c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四識住造一切罪。",
        "from": "T85n2841_001:1294c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四流造一切罪。",
        "from": "T85n2841_001:1294c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四取造因四執造一切罪。",
        "from": "T85n2841_001:1294c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四緣造一切罪。",
        "from": "T85n2841_001:1294c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四大造一切罪。",
        "from": "T85n2841_001:1294c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四縛造一切罪。",
        "from": "T85n2841_001:1294c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四食造一切罪。",
        "from": "T85n2841_001:1294c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因四生皆悉懺悔。",
        "from": "T85n2841_001:1294c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復弟子無始以來至為今日。",
        "from": "T85n2841_001:1294c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因五住地煩惱造一切罪。",
        "from": "T85n2841_001:1294c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因五受相造一切罪。",
        "from": "T85n2841_001:1294c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因五蓋造一切罪。",
        "from": "T85n2841_001:1294c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因五慳造一切。",
        "from": "T85n2841_001:1294c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因五見造一切罪。",
        "from": "T85n2841_001:1294c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因五心造一切罪。",
        "from": "T85n2841_001:1294c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等",
        "from": "T85n2841_001:1294c28_4",
        "context_with_next_sentence": false
    }
]