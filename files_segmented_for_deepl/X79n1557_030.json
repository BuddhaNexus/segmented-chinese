        "source_sentence": "多慮多失。",
        "from": "X79n1557_030:0265c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如守一。",
        "from": "X79n1557_030:0265c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慮多志散。",
        "from": "X79n1557_030:0265c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知多心亂。",
        "from": "X79n1557_030:0265c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心亂生惱。",
        "from": "X79n1557_030:0265c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志散妨道。",
        "from": "X79n1557_030:0265c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿謂何傷。",
        "from": "X79n1557_030:0265c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其苦悠長。",
        "from": "X79n1557_030:0265c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿言何畏。",
        "from": "X79n1557_030:0265c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其禍鼎沸。",
        "from": "X79n1557_030:0265c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滴水不停。",
        "from": "X79n1557_030:0265c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四海將盈。",
        "from": "X79n1557_030:0265c18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纖塵不拂。",
        "from": "X79n1557_030:0265c18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五嶽將成。",
        "from": "X79n1557_030:0265c18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "防末在本。",
        "from": "X79n1557_030:0265c18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖小不輕。",
        "from": "X79n1557_030:0265c19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "關汝七竅。",
        "from": "X79n1557_030:0265c19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閑爾六情。",
        "from": "X79n1557_030:0265c19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫視於色。",
        "from": "X79n1557_030:0265c19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫聽於聲。",
        "from": "X79n1557_030:0265c19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞聲者聾。",
        "from": "X79n1557_030:0265c20_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見色者盲。",
        "from": "X79n1557_030:0265c20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一文一藝。",
        "from": "X79n1557_030:0265c20_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中蚊蚋。",
        "from": "X79n1557_030:0265c20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一伎一能。",
        "from": "X79n1557_030:0265c20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日下孤燈。",
        "from": "X79n1557_030:0265c21_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "英賢才藝。",
        "from": "X79n1557_030:0265c21_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為愚蔽。",
        "from": "X79n1557_030:0265c21_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨棄淳朴。",
        "from": "X79n1557_030:0265c21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耽溺淫麗。",
        "from": "X79n1557_030:0265c21_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識馬易奔。",
        "from": "X79n1557_030:0265c22_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心猿難制。",
        "from": "X79n1557_030:0265c22_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神既勞役。",
        "from": "X79n1557_030:0265c22_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形必損斃。",
        "from": "X79n1557_030:0265c22_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪行終迷。",
        "from": "X79n1557_030:0265c22_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脩途永泥。",
        "from": "X79n1557_030:0265c23_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫貴才能。",
        "from": "X79n1557_030:0265c23_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日益昏瞢。",
        "from": "X79n1557_030:0265c23_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誇拙羨巧。",
        "from": "X79n1557_030:0265c23_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其德不弘。",
        "from": "X79n1557_030:0265c23_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名厚行薄。",
        "from": "X79n1557_030:0265c24_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其高速崩。",
        "from": "X79n1557_030:0265c24_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內懷憍伐。",
        "from": "X79n1557_030:0265c24_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外致怨憎。",
        "from": "X79n1557_030:0265c24_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或談於口。",
        "from": "X79n1557_030:0265c24_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或書於手。",
        "from": "X79n1557_030:0266a01_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邀人令譽。",
        "from": "X79n1557_030:0266a01_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦孔之醜。",
        "from": "X79n1557_030:0266a01_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡謂之吉。",
        "from": "X79n1557_030:0266a01_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖謂之咎。",
        "from": "X79n1557_030:0266a01_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賞翫暫時。",
        "from": "X79n1557_030:0266a02_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲哀長久。",
        "from": "X79n1557_030:0266a02_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏影畏跡。",
        "from": "X79n1557_030:0266a02_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逾遠逾極。",
        "from": "X79n1557_030:0266a02_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐樹陰。",
        "from": "X79n1557_030:0266a02_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跡滅影沉。",
        "from": "X79n1557_030:0266a03_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭生患老。",
        "from": "X79n1557_030:0266a03_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨思隨造。",
        "from": "X79n1557_030:0266a03_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想若滅。",
        "from": "X79n1557_030:0266a03_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死長絕。",
        "from": "X79n1557_030:0266a03_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不死不生。",
        "from": "X79n1557_030:0266a04_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相無名。",
        "from": "X79n1557_030:0266a04_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一道虗寂。",
        "from": "X79n1557_030:0266a04_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬物齊平。",
        "from": "X79n1557_030:0266a04_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何貴何賤。",
        "from": "X79n1557_030:0266a04_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何辱何榮。",
        "from": "X79n1557_030:0266a05_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何勝何劣。",
        "from": "X79n1557_030:0266a05_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何重何輕。",
        "from": "X79n1557_030:0266a05_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄天愧淨。",
        "from": "X79n1557_030:0266a05_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皎日慙明。",
        "from": "X79n1557_030:0266a05_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安夫岱嶺。",
        "from": "X79n1557_030:0266a06_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同彼金城。",
        "from": "X79n1557_030:0266a06_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬貽賢哲。",
        "from": "X79n1557_030:0266a06_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯道利貞。",
        "from": "X79n1557_030:0266a06_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州和尚十二時歌",
        "from": "X79n1557_030:0266a07_0",
