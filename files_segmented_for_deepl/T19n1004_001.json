[
    {
        "source_sentence": "般若波羅蜜多理趣經大樂不空",
        "from": "T19n1004_001:0617b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧真實金剛薩埵菩薩等一十",
        "from": "T19n1004_001:0617b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七聖大曼茶羅義述一卷",
        "from": "T19n1004_001:0617b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿",
        "from": "T19n1004_001:0617b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅國公食邑三千戶賜紫贈司",
        "from": "T19n1004_001:0617b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空諡大鑒正號大廣智大興",
        "from": "T19n1004_001:0617b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善寺三藏沙門不空奉　詔譯",
        "from": "T19n1004_001:0617b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(并依釋略序)",
        "from": "T19n1004_001:0617b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時毘盧遮那如來。",
        "from": "T19n1004_001:0617b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於他化自在天王宮。",
        "from": "T19n1004_001:0617b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸大菩薩等。",
        "from": "T19n1004_001:0617b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此般若波羅蜜甚深理趣十七清淨句門。",
        "from": "T19n1004_001:0617b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是十七大菩薩三摩地之句義也。",
        "from": "T19n1004_001:0617b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令能住持者疾至菩提故。",
        "from": "T19n1004_001:0617b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂演此十七聖位大曼茶羅如來與諸大士等所說密語。",
        "from": "T19n1004_001:0617b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依此修行速疾成就。",
        "from": "T19n1004_001:0617b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者為一十七聖。",
        "from": "T19n1004_001:0617b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一所謂大樂不空三昧真實金剛菩薩。",
        "from": "T19n1004_001:0617b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋表諸佛普賢之身。",
        "from": "T19n1004_001:0617b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍器世間及有情世間。",
        "from": "T19n1004_001:0617b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其無邊自在理常體寂不妄不壞故有是名也。",
        "from": "T19n1004_001:0617b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左持金剛鈴是適悅義。",
        "from": "T19n1004_001:0617b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置腰之左表大我焉。",
        "from": "T19n1004_001:0617b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右持五股金剛杵是五智義。",
        "from": "T19n1004_001:0617b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉拳向外示眾生也。",
        "from": "T19n1004_001:0617b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於曼茶羅據其中位。",
        "from": "T19n1004_001:0617b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而總其眾相。",
        "from": "T19n1004_001:0617b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除是而有一十六位焉。",
        "from": "T19n1004_001:0617b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋正覺之徑路。",
        "from": "T19n1004_001:0617b29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其二所謂意生金剛菩薩。",
        "from": "T19n1004_001:0617c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲欲箭。",
        "from": "T19n1004_001:0617c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "害二乘心。",
        "from": "T19n1004_001:0617c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以手持是箭。",
        "from": "T19n1004_001:0617c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其欲離俱幻平等智身。",
        "from": "T19n1004_001:0617c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其三所謂髻利吉羅金剛菩薩。",
        "from": "T19n1004_001:0617c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中國之言名觸。",
        "from": "T19n1004_001:0617c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不捨眾生必令解脫故。",
        "from": "T19n1004_001:0617c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明觸性即菩提故。",
        "from": "T19n1004_001:0617c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以住抱持相。",
        "from": "T19n1004_001:0617c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其觸淨俱幻平等智身。",
        "from": "T19n1004_001:0617c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其四所謂悲愍金剛菩薩。",
        "from": "T19n1004_001:0617c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以悲愍故。",
        "from": "T19n1004_001:0617c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以愛念繩。",
        "from": "T19n1004_001:0617c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普縛眾生未至菩提。",
        "from": "T19n1004_001:0617c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不放捨。",
        "from": "T19n1004_001:0617c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如摩竭大魚吞啗所遇。",
        "from": "T19n1004_001:0617c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一入口已更無免者。",
        "from": "T19n1004_001:0617c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持此摩竭魚幢。",
        "from": "T19n1004_001:0617c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其愛縛捨離俱幻平等智身。",
        "from": "T19n1004_001:0617c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其五所謂金剛慢菩薩。",
        "from": "T19n1004_001:0617c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無過上智。",
        "from": "T19n1004_001:0617c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切眾生悉證毘盧遮那如來體。",
        "from": "T19n1004_001:0617c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世出世間皆得自在。",
        "from": "T19n1004_001:0617c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以住傲誕威儀。",
        "from": "T19n1004_001:0617c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其我無我俱幻平等智身。",
        "from": "T19n1004_001:0617c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其六所謂金剛見菩薩。",
        "from": "T19n1004_001:0617c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以寂照大慧之眼。",
        "from": "T19n1004_001:0617c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雜染界妙淨土乃至真諦俗諦。",
        "from": "T19n1004_001:0617c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯見一切法勝義真實之諦。",
        "from": "T19n1004_001:0617c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不散不動。",
        "from": "T19n1004_001:0617c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持意生之契。",
        "from": "T19n1004_001:0617c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0617c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其七所謂金剛適悅菩薩。",
        "from": "T19n1004_001:0617c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於身塵而得適悅清淨。",
        "from": "T19n1004_001:0617c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死解脫不厭不住。",
        "from": "T19n1004_001:0617c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持觸金剛相。",
        "from": "T19n1004_001:0617c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0617c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其八所謂金剛貪菩薩。",
        "from": "T19n1004_001:0617c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即貪愛而得清淨故。",
        "from": "T19n1004_001:0617c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂能以貪而積集一切功德智慧。",
        "from": "T19n1004_001:0617c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證菩提。",
        "from": "T19n1004_001:0617c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由住貪愛性故。",
        "from": "T19n1004_001:0617c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以持悲愍之契。",
        "from": "T19n1004_001:0617c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0617c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其九所謂金剛自在菩薩。",
        "from": "T19n1004_001:0617c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入三界自在無畏。",
        "from": "T19n1004_001:0617c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死涅槃而得大我之體。",
        "from": "T19n1004_001:0617c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以住金剛慢相。",
        "from": "T19n1004_001:0617c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現其三昧之身。",
        "from": "T19n1004_001:0618a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十所謂金剛春菩薩。",
        "from": "T19n1004_001:0618a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以菩提覺花起供養雲海。",
        "from": "T19n1004_001:0618a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授與眾生作功德利。",
        "from": "T19n1004_001:0618a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以花是春事。",
        "from": "T19n1004_001:0618a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以名之。",
        "from": "T19n1004_001:0618a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故亦持花以為其契。",
        "from": "T19n1004_001:0618a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十一所謂金剛雲菩薩。",
        "from": "T19n1004_001:0618a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以法澤慈雲。",
        "from": "T19n1004_001:0618a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滋潤含識。",
        "from": "T19n1004_001:0618a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授諸身心使無始無明臭穢不善。",
        "from": "T19n1004_001:0618a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化成無量供養香雲。",
        "from": "T19n1004_001:0618a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鑪煙像雲。",
        "from": "T19n1004_001:0618a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以為號。",
        "from": "T19n1004_001:0618a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故持焚香之器以為契焉。",
        "from": "T19n1004_001:0618a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十二所謂金剛秋菩薩。",
        "from": "T19n1004_001:0618a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以智燈破諸黑暗。",
        "from": "T19n1004_001:0618a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授與眾生。",
        "from": "T19n1004_001:0618a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起無量光明供養雲海。",
        "from": "T19n1004_001:0618a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其空色清爽莫如秋時。",
        "from": "T19n1004_001:0618a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲表智光之體。",
        "from": "T19n1004_001:0618a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以名之。",
        "from": "T19n1004_001:0618a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故執燈明以為其契。",
        "from": "T19n1004_001:0618a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十三所謂金剛霜雪菩薩。",
        "from": "T19n1004_001:0618a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以五無漏蘊香。",
        "from": "T19n1004_001:0618a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗眾生心體。",
        "from": "T19n1004_001:0618a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅煩惱之穢熱。",
        "from": "T19n1004_001:0618a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成五分法身之香。",
        "from": "T19n1004_001:0618a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以方便授與眾生。",
        "from": "T19n1004_001:0618a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起塗香供養雲海。",
        "from": "T19n1004_001:0618a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以栴檀塗香解諸毒熱有似霜雪。",
        "from": "T19n1004_001:0618a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以名之。",
        "from": "T19n1004_001:0618a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故執塗香以為其契。",
        "from": "T19n1004_001:0618a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十四所謂金剛色菩薩。",
        "from": "T19n1004_001:0618a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以色清淨智。",
        "from": "T19n1004_001:0618a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於淨妙界起受用色身。",
        "from": "T19n1004_001:0618a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雜染界起變化色身。",
        "from": "T19n1004_001:0618a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為攝來之事。",
        "from": "T19n1004_001:0618a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以持鉤為契。",
        "from": "T19n1004_001:0618a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十五所謂金剛聲菩薩。",
        "from": "T19n1004_001:0618a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以聲清淨智。",
        "from": "T19n1004_001:0618a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能表六十四種梵音。",
        "from": "T19n1004_001:0618a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普周法界而為引入之事。",
        "from": "T19n1004_001:0618a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故持索以為契。",
        "from": "T19n1004_001:0618a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十六所謂金剛香菩薩。",
        "from": "T19n1004_001:0618a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香清淨智。",
        "from": "T19n1004_001:0618a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發金剛界自然名稱之香。",
        "from": "T19n1004_001:0618a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入一切散動心以為止留之事。",
        "from": "T19n1004_001:0618a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以持鎖為契。",
        "from": "T19n1004_001:0618a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十七所謂金剛味菩薩。",
        "from": "T19n1004_001:0618a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以味清淨智。",
        "from": "T19n1004_001:0618a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持瑜伽三摩地無上法味。",
        "from": "T19n1004_001:0618a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為歡樂之事。",
        "from": "T19n1004_001:0618a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故持鈴為契。",
        "from": "T19n1004_001:0618a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等大菩薩十七清淨三摩地智。",
        "from": "T19n1004_001:0618b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依文廣述。",
        "from": "T19n1004_001:0618b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無量名義體用理事成證之門。",
        "from": "T19n1004_001:0618b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今但粗舉綱目而已。",
        "from": "T19n1004_001:0618b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出金剛頂經第十三會大三昧耶真實瑜伽略鈔大意。",
        "from": "T19n1004_001:0618b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜多理趣經大安樂不空三昧真實金剛菩薩等一十七聖大曼茶羅義述一卷",
        "from": "T19n1004_001:0618b05_0",
        "context_with_next_sentence": false
    }
]