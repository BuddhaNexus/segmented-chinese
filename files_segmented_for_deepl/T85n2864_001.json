[
    {
        "source_sentence": "進旨",
        "from": "T85n2864_001:1324a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進旨　皇帝聞語滿目流淚。",
        "from": "T85n2864_001:1324a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良久乃言和尚曰。",
        "from": "T85n2864_001:1324a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕之小國總無供養。",
        "from": "T85n2864_001:1324a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上人數年在其內中。",
        "from": "T85n2864_001:1324a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕且無心輕慢。",
        "from": "T85n2864_001:1324a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕雖為人主濫處乾坤。",
        "from": "T85n2864_001:1324a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每謝上人來過小國。",
        "from": "T85n2864_001:1324a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願和尚慈悲更住。",
        "from": "T85n2864_001:1324a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三五日間得之已否　遠公曰。",
        "from": "T85n2864_001:1324a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夫涅槃之義本無攀緣。",
        "from": "T85n2864_001:1324b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有攀緣皆屬忌想。",
        "from": "T85n2864_001:1324b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願陛下莫懷恫悵。",
        "from": "T85n2864_001:1324b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧道有願歸山。",
        "from": "T85n2864_001:1324b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇帝見他。",
        "from": "T85n2864_001:1324b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公語切便如情意難留。",
        "from": "T85n2864_001:1324b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有勅先報六宮闇裏排比祖送。",
        "from": "T85n2864_001:1324b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時皇帝慕戀辟宰冲冲合國大臣同時祖送。",
        "from": "T85n2864_001:1324b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公上路離宮□別龍樓。",
        "from": "T85n2864_001:1324b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "望[山*盧]山而路遠。",
        "from": "T85n2864_001:1324b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩江河以逍遙。",
        "from": "T85n2864_001:1324b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是日遠公能涉長路而行遂。",
        "from": "T85n2864_001:1324b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即密現神通。",
        "from": "T85n2864_001:1324b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公既出長安足下雲生。",
        "from": "T85n2864_001:1324b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如壯士展臂須臾之間便至[山*盧]山。",
        "from": "T85n2864_001:1324b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公亦也不歸舊寺。",
        "from": "T85n2864_001:1324b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相去十里。",
        "from": "T85n2864_001:1324b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已來於一峻嶺上權時結一草菴。",
        "from": "T85n2864_001:1324b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼中結跏敷坐便即重尋舊卷。",
        "from": "T85n2864_001:1324b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再舉經聲荏苒之間。",
        "from": "T85n2864_001:1324b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又經數月。",
        "from": "T85n2864_001:1324b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公忽望高原。",
        "from": "T85n2864_001:1324b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃喚此上。",
        "from": "T85n2864_001:1324b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其境峻峯鶴鳴澗下龍吟。",
        "from": "T85n2864_001:1324b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百谷千峯例皆花發。",
        "from": "T85n2864_001:1324b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地平長流之水。",
        "from": "T85n2864_001:1324b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薗開不朽之花。",
        "from": "T85n2864_001:1324b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是如來修行之處。",
        "from": "T85n2864_001:1324b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是遠公正坐入其三昧。",
        "from": "T85n2864_001:1324b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然淨意澄心思惟佛道念浮生不久想凡世而無愖便將自性心王造一法船歸依上界。",
        "from": "T85n2864_001:1324b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公造船不用。",
        "from": "T85n2864_001:1324b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡間料□也。",
        "from": "T85n2864_001:1324b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不要諸般。",
        "from": "T85n2864_001:1324b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自持無漏。",
        "from": "T85n2864_001:1324b18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘已為欖李。",
        "from": "T85n2864_001:1324b19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提般若用作拘欗。",
        "from": "T85n2864_001:1324b19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密迹已為。",
        "from": "T85n2864_001:1324b19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開寶伍年張長繼書記",
        "from": "T85n2864_001:1324b21_0",
        "context_with_next_sentence": false
    }
]