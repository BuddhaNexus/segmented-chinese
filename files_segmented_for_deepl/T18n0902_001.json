[
    {
        "source_sentence": "總釋陀羅尼義讚",
        "from": "T18n0902_001:0898a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏沙門大廣智不空奉　詔解釋",
        "from": "T18n0902_001:0898a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來於百千俱胝阿　僧祇劫。",
        "from": "T18n0902_001:0898a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積集菩提資糧加持陀羅尼真言文字。",
        "from": "T18n0902_001:0898a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令頓悟菩薩與此相應。",
        "from": "T18n0902_001:0898a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓集福德智慧資糧。",
        "from": "T18n0902_001:0898a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大乘修菩薩道二種修行。",
        "from": "T18n0902_001:0898a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證無上菩提道。",
        "from": "T18n0902_001:0898a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂依諸波羅蜜修行成佛。",
        "from": "T18n0902_001:0898a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依真言陀羅尼三密門修行成佛。",
        "from": "T18n0902_001:0898a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼者梵語。",
        "from": "T18n0902_001:0898a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐翻名為總持義。",
        "from": "T18n0902_001:0898a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四種持。",
        "from": "T18n0902_001:0898a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法持義持三摩地持文持。",
        "from": "T18n0902_001:0898a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此四種持。",
        "from": "T18n0902_001:0898a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多依顯教大乘教中所說也。",
        "from": "T18n0902_001:0898a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法持者由得此持。",
        "from": "T18n0902_001:0898a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧滅一切雜染之法。",
        "from": "T18n0902_001:0898a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得清淨法界等流教法。",
        "from": "T18n0902_001:0898a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義持者由得此持。",
        "from": "T18n0902_001:0898a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一字義中悟百千無量修多羅行。",
        "from": "T18n0902_001:0898a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說逆順自在。",
        "from": "T18n0902_001:0898a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地持者由此持故。",
        "from": "T18n0902_001:0898a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不散動三昧現前。",
        "from": "T18n0902_001:0898a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟無量百千三摩地門。",
        "from": "T18n0902_001:0898a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲增菩薩。",
        "from": "T18n0902_001:0898a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故於六趣以願受生。",
        "from": "T18n0902_001:0898a18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被煩惱隨煩惱壞其三昧。",
        "from": "T18n0902_001:0898a18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此三摩地證五神通。",
        "from": "T18n0902_001:0898a19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就利樂無邊有情。",
        "from": "T18n0902_001:0898a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文持者由此受持陀羅尼成就所聞。",
        "from": "T18n0902_001:0898a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂一切契經。",
        "from": "T18n0902_001:0898a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來諸菩薩所。",
        "from": "T18n0902_001:0898a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞百千無量修多羅永不忘失。",
        "from": "T18n0902_001:0898a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其真言亦具四義。",
        "from": "T18n0902_001:0898a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真者真如相應。",
        "from": "T18n0902_001:0898a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言者真詮義。",
        "from": "T18n0902_001:0898a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四義者。",
        "from": "T18n0902_001:0898a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法真言。",
        "from": "T18n0902_001:0898a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨法界以為真言。",
        "from": "T18n0902_001:0898a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義真言者勝義相應。",
        "from": "T18n0902_001:0898a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一字中有實相義。",
        "from": "T18n0902_001:0898a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地真言者。",
        "from": "T18n0902_001:0898a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由瑜伽者用此真言。",
        "from": "T18n0902_001:0898a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心鏡智月輪上布列真言文字。",
        "from": "T18n0902_001:0898a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專注心不散動。",
        "from": "T18n0902_001:0898a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速疾證三摩地故名三摩地真言。",
        "from": "T18n0902_001:0898a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文持真言者從唵字至娑嚩賀。",
        "from": "T18n0902_001:0898a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間所有文字。",
        "from": "T18n0902_001:0898a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一字皆名為真言。",
        "from": "T18n0902_001:0898a29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云密言。",
        "from": "T18n0902_001:0898b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦具有四義。",
        "from": "T18n0902_001:0898b01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法密言者。",
        "from": "T18n0902_001:0898b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非法外道及二乘境界。",
        "from": "T18n0902_001:0898b01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯修真言行菩薩。",
        "from": "T18n0902_001:0898b02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所聞所持軌則印契曼荼羅。",
        "from": "T18n0902_001:0898b02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行所求悉地名法密言。",
        "from": "T18n0902_001:0898b03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義密言者。",
        "from": "T18n0902_001:0898b04_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言中一一字。",
        "from": "T18n0902_001:0898b04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛與佛大威德菩薩乃能究盡。",
        "from": "T18n0902_001:0898b04_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地密言者。",
        "from": "T18n0902_001:0898b05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此中真言文字三摩地相應威力。",
        "from": "T18n0902_001:0898b05_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍布真言者身支分。",
        "from": "T18n0902_001:0898b06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變麁重身易得微妙色身。",
        "from": "T18n0902_001:0898b07_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得五神通威德自在壽量無盡。",
        "from": "T18n0902_001:0898b07_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞持密言者。",
        "from": "T18n0902_001:0898b08_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師密受三密軌則。",
        "from": "T18n0902_001:0898b08_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯師及弟子自知。",
        "from": "T18n0902_001:0898b09_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非令餘人之所知也。",
        "from": "T18n0902_001:0898b09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至本尊形像印契觀門。",
        "from": "T18n0902_001:0898b10_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆密受持。",
        "from": "T18n0902_001:0898b10_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得心所悕望三摩地聞持不忘天眼天耳他心上中下悉地亦名為明。",
        "from": "T18n0902_001:0898b10_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具四義。",
        "from": "T18n0902_001:0898b12_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法明者。",
        "from": "T18n0902_001:0898b12_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者稱誦一一字中光明。",
        "from": "T18n0902_001:0898b12_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照十方世界。",
        "from": "T18n0902_001:0898b13_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情沈溺生死苦海。",
        "from": "T18n0902_001:0898b13_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆破無明煩惱。",
        "from": "T18n0902_001:0898b14_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得離苦解脫故名法明。",
        "from": "T18n0902_001:0898b14_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義明者。",
        "from": "T18n0902_001:0898b15_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由瑜伽者與真言義相應故。",
        "from": "T18n0902_001:0898b15_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達明了般若波羅蜜。",
        "from": "T18n0902_001:0898b16_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離無義道理。",
        "from": "T18n0902_001:0898b16_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地明者。",
        "from": "T18n0902_001:0898b17_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由真言種子想於心月輪中。",
        "from": "T18n0902_001:0898b17_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得大光明作自他照明三摩地成就。",
        "from": "T18n0902_001:0898b18_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞持明者。",
        "from": "T18n0902_001:0898b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得聞持法。",
        "from": "T18n0902_001:0898b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能破廢忘之惑。",
        "from": "T18n0902_001:0898b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得菩提心成就。",
        "from": "T18n0902_001:0898b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上陀羅尼真言密言明義依梵文。",
        "from": "T18n0902_001:0898b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於顯教修多羅中稱說。",
        "from": "T18n0902_001:0898b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於真言密教中說如是四稱。",
        "from": "T18n0902_001:0898b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有一字真言乃至二字三字乃至百字千字萬字。",
        "from": "T18n0902_001:0898b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復過此數乃至無量無邊。",
        "from": "T18n0902_001:0898b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆名陀羅尼真言密言明若與三密門相應。",
        "from": "T18n0902_001:0898b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不暇多劫難行苦行。",
        "from": "T18n0902_001:0898b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能轉定業速疾易成安樂成佛速疾之道。",
        "from": "T18n0902_001:0898b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總釋陀羅尼義讚",
        "from": "T18n0902_001:0898b28_0",
        "context_with_next_sentence": false
    }
]