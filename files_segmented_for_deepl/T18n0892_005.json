[
    {
        "source_sentence": "佛說大悲空智金剛大教王儀軌",
        "from": "T18n0892_005:0599b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經卷第五",
        "from": "T18n0892_005:0599b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋西天三藏銀青光祿大夫試光祿卿",
        "from": "T18n0892_005:0599b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普明慈覺傳梵大師法護奉　詔譯",
        "from": "T18n0892_005:0599b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛王出現品第十五之餘",
        "from": "T18n0892_005:0599b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次金剛藏菩薩。",
        "from": "T18n0892_005:0599b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸明妃右半跏趺立如舞勢。",
        "from": "T18n0892_005:0599b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二臂三目竪忿怒髻。",
        "from": "T18n0892_005:0599b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆用如前五印莊嚴。",
        "from": "T18n0892_005:0599b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遨哩明妃黑色陬哩明妃紅色。",
        "from": "T18n0892_005:0599b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾多哩明妃黃赤色。",
        "from": "T18n0892_005:0599b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴三摩哩明妃綠色。",
        "from": "T18n0892_005:0599b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卜葛西明妃帝青珠色。",
        "from": "T18n0892_005:0599b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設嚩哩明妃珂月色。",
        "from": "T18n0892_005:0599c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贊拏哩明妃虛空青色。",
        "from": "T18n0892_005:0599c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "努彌尼明妃具種種色。",
        "from": "T18n0892_005:0599c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又諸明妃足履八魔。",
        "from": "T18n0892_005:0599c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂梵釋那羅延大自在。",
        "from": "T18n0892_005:0599c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吠濕嚩多尾怛那。",
        "from": "T18n0892_005:0599c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃哩底毘摩質多羅天等。",
        "from": "T18n0892_005:0599c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各以最上供具。",
        "from": "T18n0892_005:0599c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛部生適悅心尊重供養。",
        "from": "T18n0892_005:0599c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次無我菩薩問言。",
        "from": "T18n0892_005:0599c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大祕密及信愛法。",
        "from": "T18n0892_005:0599c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召諸龍天阿蘇羅。",
        "from": "T18n0892_005:0599c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以何等真言期剋摧伏諸難調者。",
        "from": "T18n0892_005:0599c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛王答如是言。",
        "from": "T18n0892_005:0599c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝聽我說是妙樂輪。",
        "from": "T18n0892_005:0599c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩我及餘處不妄開示。",
        "from": "T18n0892_005:0599c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有如實金剛薩埵等。",
        "from": "T18n0892_005:0599c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是真言無少悋惜。",
        "from": "T18n0892_005:0599c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是慇懃當為汝說。",
        "from": "T18n0892_005:0599c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以熾盛華鬘周遍間錯。",
        "from": "T18n0892_005:0599c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粉布曼拏羅已。",
        "from": "T18n0892_005:0599c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛藏為授灌頂。",
        "from": "T18n0892_005:0599c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用上妙黑色脂麻。",
        "from": "T18n0892_005:0599c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厲聲加持念發吒一萬遍。",
        "from": "T18n0892_005:0599c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於空智金剛相應即得鉤召一切。",
        "from": "T18n0892_005:0599c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念十萬遍是人諸有所作。",
        "from": "T18n0892_005:0599c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於瑜伽相應離諸疑惑。",
        "from": "T18n0892_005:0599c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說真言曰。",
        "from": "T18n0892_005:0599c15_18",
        "context_with_next_sentence": true
    },
    {
