        "from": "T18n0892_005:0599c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是智所至處相應。",
        "from": "T18n0892_005:0600a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起適悅意。",
        "from": "T18n0892_005:0600a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問是最上堅固祕密妙曼拏羅。",
        "from": "T18n0892_005:0600a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大智調御師生大歡喜住三摩呬多。",
        "from": "T18n0892_005:0600a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛蓮華大相應門。",
        "from": "T18n0892_005:0600a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而自粉畫其曼拏羅。",
        "from": "T18n0892_005:0600a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一重四門四峯樓閣五色界道。",
        "from": "T18n0892_005:0600a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛智線正等相應。",
        "from": "T18n0892_005:0600a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍光明種種嚴飾。",
        "from": "T18n0892_005:0600a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八大賢瓶如次粉畫。",
        "from": "T18n0892_005:0600a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以寶末或五粉末寒林塼炭末。",
        "from": "T18n0892_005:0600a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中位畫八葉蓮。",
        "from": "T18n0892_005:0600a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於臺蘂中粉畫白色三分葛波羅相。",
        "from": "T18n0892_005:0600a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊舍那方畫師子。",
        "from": "T18n0892_005:0600a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火天方苾芻像。",
        "from": "T18n0892_005:0600a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃哩底方畫輪。",
        "from": "T18n0892_005:0600a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風天方金剛杵。",
        "from": "T18n0892_005:0600a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東門寶刀。",
        "from": "T18n0892_005:0600a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南門奎樓鼓。",
        "from": "T18n0892_005:0600a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西門畫龜。",
        "from": "T18n0892_005:0600a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北門畫龍。",
        "from": "T18n0892_005:0600a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明妃色相已如前說。",
        "from": "T18n0892_005:0600a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名八種幖幟。",
        "from": "T18n0892_005:0600a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中位白色畫善巧金剛杵。",
        "from": "T18n0892_005:0600a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別置一瓶名曰最勝。",
        "from": "T18n0892_005:0600a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頸繫妙繒。",
        "from": "T18n0892_005:0600a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "插鉢羅嚩吉祥樹枝。",
        "from": "T18n0892_005:0600a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入五寶末及五穀等。",
        "from": "T18n0892_005:0600a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切圓滿廣說如真實攝曼拏羅儀軌。",
        "from": "T18n0892_005:0600a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如是知。",
        "from": "T18n0892_005:0600a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入是曼拏羅者。",
        "from": "T18n0892_005:0600a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想八種大明。",
        "from": "T18n0892_005:0600a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如十二或十六童子相。",
        "from": "T18n0892_005:0600a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞妙繒殊勝嚴飾。",
        "from": "T18n0892_005:0600a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂惹那末仡哩訥呬多末仡尼摩摩寫末哩耶摩覩末仡尼。",
        "from": "T18n0892_005:0600a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名八種大明。",
        "from": "T18n0892_005:0600a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修瑜伽者先以龍腦水散灑供養已。",
        "from": "T18n0892_005:0600a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是八種速獲成就。",
        "from": "T18n0892_005:0600a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次曼拏羅中。",
        "from": "T18n0892_005:0600a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上妙法食及妙衣服為解脫故。",
        "from": "T18n0892_005:0600a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛蓮華歌詠舞戲。",
        "from": "T18n0892_005:0600a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而供養之如實相應。",
        "from": "T18n0892_005:0600a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後於中夜分。",
        "from": "T18n0892_005:0600a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引諸弟子入火壇中。",
        "from": "T18n0892_005:0600a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除去面衣視曼拏。",
        "from": "T18n0892_005:0600a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華所隨處為作灌頂。",
        "from": "T18n0892_005:0600a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時灌頂阿闍梨。",
        "from": "T18n0892_005:0600a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其為說別別行相稱讚供養。",
        "from": "T18n0892_005:0600a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說是為牟尼如來清淨學者。",
        "from": "T18n0892_005:0600a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是遠離貪等邊際顯示真實。",
        "from": "T18n0892_005:0600a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸儀軌少分開示。",
        "from": "T18n0892_005:0600a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次無我菩薩問言。",
        "from": "T18n0892_005:0600a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼金剛相應作供養已一剎那頃云。",
        "from": "T18n0892_005:0600a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何如是說名本尊。",
        "from": "T18n0892_005:0600a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偈答曰。",
        "from": "T18n0892_005:0600a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是法非三世　　非輪迴涅槃",
        "from": "T18n0892_005:0600a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無自亦無他　　斯最上大樂",
        "from": "T18n0892_005:0600b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如人自舉手　　拇指及無名",
        "from": "T18n0892_005:0600b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二指竪相捻　　二報斯決定",
        "from": "T18n0892_005:0600b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如本無是相　　云何生有想",
        "from": "T18n0892_005:0600b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　設後智生時　　如啞所受夢",
        "from": "T18n0892_005:0600b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此最勝邊際　　由遠離貪故",
        "from": "T18n0892_005:0600b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　依空實際中　　是即名空智",
        "from": "T18n0892_005:0600b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛空智熾盛拏吉尼畫像儀式品第十六復次五印我今當說。",
        "from": "T18n0892_005:0600b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂頂相寶輪者。",
        "from": "T18n0892_005:0600b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯常敬禮教授阿闍梨及自師尊。",
        "from": "T18n0892_005:0600b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳寶鐶者不樂聞說。",
        "from": "T18n0892_005:0600b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持金剛者及自師尊一切過失麁惡語故。",
        "from": "T18n0892_005:0600b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頸寶鬘者唯常誦持大明呪故。",
        "from": "T18n0892_005:0600b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手寶釧者乃至不殺蠕動諸眾生故。",
        "from": "T18n0892_005:0600b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腰寶帶者遠離一切欲邪行故。",
        "from": "T18n0892_005:0600b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五佛印常所印身是則清淨。",
        "from": "T18n0892_005:0600b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次空智。",
        "from": "T18n0892_005:0600b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛畫像儀式我當開示。",
        "from": "T18n0892_005:0600b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求成就者受三昧耶戒。",
        "from": "T18n0892_005:0600b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼工畫師亦受三昧。",
        "from": "T18n0892_005:0600b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫像繒帛清淨細密擇去髮毛。",
        "from": "T18n0892_005:0600b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以蓮華器成五彩色。",
        "from": "T18n0892_005:0600b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於像幀下畫自師尊。",
        "from": "T18n0892_005:0600b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或先以絲線加持供養。",
        "from": "T18n0892_005:0600b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其大小織作幀樣。",
        "from": "T18n0892_005:0600b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以廣大三昧耶相應加持。",
        "from": "T18n0892_005:0600b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於黑月分十四日。",
        "from": "T18n0892_005:0600b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或空寂舍中日分時。",
        "from": "T18n0892_005:0600b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起勇悍心以上味法食。",
        "from": "T18n0892_005:0600b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服妙繒綵為解脫故。",
        "from": "T18n0892_005:0600b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾寶嚴飾。",
        "from": "T18n0892_005:0600b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住是三昧者。",
        "from": "T18n0892_005:0600b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設飲食已不須漱滌塵穢故作淨相。",
        "from": "T18n0892_005:0600b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後求一具相童子。",
        "from": "T18n0892_005:0600b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性行調柔眾所愛敬。",
        "from": "T18n0892_005:0600b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於左邊。",
        "from": "T18n0892_005:0600b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散妙香華為成就者。",
        "from": "T18n0892_005:0600b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食品第十七",
        "from": "T18n0892_005:0600b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次書寫愛持我今當說。",
        "from": "T18n0892_005:0600b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用樺皮葉等長十二指。",
        "from": "T18n0892_005:0600b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此經者亦令受三昧耶戒。",
        "from": "T18n0892_005:0600b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用最上香墨。",
        "from": "T18n0892_005:0600b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復刺血以骨為筆。",
        "from": "T18n0892_005:0600b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此經及前幀像。",
        "from": "T18n0892_005:0600b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或不受三昧耶戒及餘惡人。",
        "from": "T18n0892_005:0600b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若令見者不能成就。",
        "from": "T18n0892_005:0600c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至他世墮諸惡趣。",
        "from": "T18n0892_005:0600c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此經法而常頂戴。",
        "from": "T18n0892_005:0600c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或置餘部大乘經中密令護持。",
        "from": "T18n0892_005:0600c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次飲食我今當說。",
        "from": "T18n0892_005:0600c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或眼目修廣如是人來於曼拏羅。",
        "from": "T18n0892_005:0600c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以上味法食而供養者。",
        "from": "T18n0892_005:0600c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸義利而獲成就。",
        "from": "T18n0892_005:0600c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或塚壙間清淨山林。",
        "from": "T18n0892_005:0600c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾所住處及大海岸如是飲食。",
        "from": "T18n0892_005:0600c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布座九位以虎皮為座或寒林衣。",
        "from": "T18n0892_005:0600c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中位分布空智金剛諸瑜儗尼等隨知方隅。",
        "from": "T18n0892_005:0600c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安虎皮座以三昧耶食。",
        "from": "T18n0892_005:0600c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或供王者饌一心供養。",
        "from": "T18n0892_005:0600c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眷屬曼拏羅廣大成就。",
        "from": "T18n0892_005:0600c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復用一蓮華器滿中盛酪。",
        "from": "T18n0892_005:0600c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作蓮華印契手奉自師尊作大禮敬。",
        "from": "T18n0892_005:0600c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取已自食獲大福報。",
        "from": "T18n0892_005:0600c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求成就者當如是恭敬。",
        "from": "T18n0892_005:0600c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教授品第十八",
        "from": "T18n0892_005:0600c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次於世俗相擇法弟子我今當說。",
        "from": "T18n0892_005:0600c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身不狹長亦不矬陋不白不黑。",
        "from": "T18n0892_005:0600c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮華敷具諸相好。",
        "from": "T18n0892_005:0600c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或出入息如青蓮香。",
        "from": "T18n0892_005:0600c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身腋汗濡如出微妙栴檀沈水悉羅訶等及妙華香。",
        "from": "T18n0892_005:0600c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者如實應善觀察。",
        "from": "T18n0892_005:0600c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復尊重不樂戲笑。",
        "from": "T18n0892_005:0600c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出言慈愛意慮寂靜。",
        "from": "T18n0892_005:0600c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮紺殊妙諸相具足。",
        "from": "T18n0892_005:0600c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如是法器速獲成就。",
        "from": "T18n0892_005:0600c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時無我菩薩問言。",
        "from": "T18n0892_005:0600c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於俱生喜及自本誓云何奉行。",
        "from": "T18n0892_005:0600c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言謂常行三昧無諸過失。",
        "from": "T18n0892_005:0600c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛空智及自師尊。",
        "from": "T18n0892_005:0600c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲憐愍生勝族中。",
        "from": "T18n0892_005:0600c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執金剛鈴誦持深法。",
        "from": "T18n0892_005:0600c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次無我菩薩重白佛言。",
        "from": "T18n0892_005:0600c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是惡人輩多諸弊惡云何教授。",
        "from": "T18n0892_005:0600c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言應先布薩淨住律儀。",
        "from": "T18n0892_005:0600c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教授經法瑜伽觀行。",
        "from": "T18n0892_005:0600c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大毘婆沙及中論等。",
        "from": "T18n0892_005:0600c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切真言理趣如實知已。",
        "from": "T18n0892_005:0600c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後為說吉祥金剛空智。",
        "from": "T18n0892_005:0600c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次欲作降伏法者。",
        "from": "T18n0892_005:0600c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛如來及自師尊。",
        "from": "T18n0892_005:0600c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作白已如其所見極惡眾生。",
        "from": "T18n0892_005:0600c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀佛形像破滅聖教。",
        "from": "T18n0892_005:0600c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令生意樂作彼觀想頂踵顛倒。",
        "from": "T18n0892_005:0601a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人首飾速生顫動。",
        "from": "T18n0892_005:0601a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道路中思入火聚。",
        "from": "T18n0892_005:0601a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心火種子應時現行。",
        "from": "T18n0892_005:0601a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是見已剎那降伏。",
        "from": "T18n0892_005:0601a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大儀軌不須護摩及印縛法。",
        "from": "T18n0892_005:0601a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧呪句隨念成就。",
        "from": "T18n0892_005:0601a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此所說清淨最上最勝祕密。",
        "from": "T18n0892_005:0601a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其成就不應分別得大罪咎。",
        "from": "T18n0892_005:0601a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如大寶光明鬘聚。",
        "from": "T18n0892_005:0601a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此通達或未通達。",
        "from": "T18n0892_005:0601a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及不相應悉生愛樂。",
        "from": "T18n0892_005:0601a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於三寶功德。",
        "from": "T18n0892_005:0601a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著世五欲是不清淨。",
        "from": "T18n0892_005:0601a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如得淨甘露轉成毒藥。",
        "from": "T18n0892_005:0601a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生輪迴及佛彼岸體無二故。",
        "from": "T18n0892_005:0601a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次聽我所說。",
        "from": "T18n0892_005:0601a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於祕密乘出生行相。",
        "from": "T18n0892_005:0601a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂信愛眼者即大悲所生。",
        "from": "T18n0892_005:0601a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身黑色者慈心所現。",
        "from": "T18n0892_005:0601a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四足者四攝事所生。",
        "from": "T18n0892_005:0601a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八面者八解脫所生。",
        "from": "T18n0892_005:0601a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一十六臂者一十六空所顯。",
        "from": "T18n0892_005:0601a12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五印者即五如來所生。",
        "from": "T18n0892_005:0601a13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒相者摧伏諸難調者所起。",
        "from": "T18n0892_005:0601a13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至皮骨脂肉血脈等相即四明妃。",
        "from": "T18n0892_005:0601a14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七等覺支及四真諦所生諸八部真言曰。",
        "from": "T18n0892_005:0601a15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)阿吽(引)發吒(半音)薩嚩(二合引)賀持念品第十九復次金剛薩埵。",
        "from": "T18n0892_005:0601a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說諸法律儀持念境界。",
        "from": "T18n0892_005:0601a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今開示禁止法。",
        "from": "T18n0892_005:0601a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用乳汁以水精為念珠。",
        "from": "T18n0892_005:0601a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信愛法。",
        "from": "T18n0892_005:0601a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用璨拏摩藥。",
        "from": "T18n0892_005:0601a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以赤栴檀為念珠。",
        "from": "T18n0892_005:0601a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二種降伏法。",
        "from": "T18n0892_005:0601a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並用悉羅訶香。",
        "from": "T18n0892_005:0601a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以木槵子或水牛角為念珠。",
        "from": "T18n0892_005:0601a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒法。",
        "from": "T18n0892_005:0601a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用白米飯。",
        "from": "T18n0892_005:0601a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以真珠為念珠。",
        "from": "T18n0892_005:0601a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召法。",
        "from": "T18n0892_005:0601a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用四種妙香。",
        "from": "T18n0892_005:0601a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以末囉多木為念珠。",
        "from": "T18n0892_005:0601a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發遣用麝香或自止出入息。",
        "from": "T18n0892_005:0601a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以碼碯為念珠。",
        "from": "T18n0892_005:0601a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又求雨法及忿怒法。",
        "from": "T18n0892_005:0601a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並真珠為念珠。",
        "from": "T18n0892_005:0601a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱生義品第二十",
        "from": "T18n0892_005:0601a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次於此薩埵部中安住。",
        "from": "T18n0892_005:0601a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂八輻輪。",
        "from": "T18n0892_005:0601a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或般若波羅蜜多梵夾求成就者。",
        "from": "T18n0892_005:0601a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無名指節如九鈷杵。",
        "from": "T18n0892_005:0601a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黑色相者於阿閦如來部而為本尊。",
        "from": "T18n0892_005:0601b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手如輪相。",
        "from": "T18n0892_005:0601b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大白色者毘盧遮那如來部而為本尊。",
        "from": "T18n0892_005:0601b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮華文。",
        "from": "T18n0892_005:0601b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紅色相者無量壽如來部而為本尊。",
        "from": "T18n0892_005:0601b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寶劍相。",
        "from": "T18n0892_005:0601b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大綠色者不空成就如來部而為本尊。",
        "from": "T18n0892_005:0601b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如妙寶珠。",
        "from": "T18n0892_005:0601b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色相者寶生如來部而為本尊。",
        "from": "T18n0892_005:0601b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淡黃色者金剛薩埵部而為本尊。",
        "from": "T18n0892_005:0601b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修瑜伽者或無是相。",
        "from": "T18n0892_005:0601b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大知見慈心相應不生悔慢。",
        "from": "T18n0892_005:0601b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即諸如來之所建立。",
        "from": "T18n0892_005:0601b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時無我菩薩聞是說已。",
        "from": "T18n0892_005:0601b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大了悟作諸供養。",
        "from": "T18n0892_005:0601b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於勝園林寂靜方所而自安住。",
        "from": "T18n0892_005:0601b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸求成就者。",
        "from": "T18n0892_005:0601b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依如上說。",
        "from": "T18n0892_005:0601b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食衣服及諸法具。",
        "from": "T18n0892_005:0601b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨莊嚴常修禮敬。",
        "from": "T18n0892_005:0601b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉獲如來廣大成就。",
        "from": "T18n0892_005:0601b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛藏菩薩。",
        "from": "T18n0892_005:0601b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說灌頂四種伽陀曰。",
        "from": "T18n0892_005:0601b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善哉金剛阿闍梨　　普令攝受諸學者　執大金剛大妙鈴　　安住金剛大壇界　以我祕密灌諸頂　　由灌頂故心所持　如佛菩提大導師　　成就無邊真法子　哀愍哀愍大薩埵　　極哀愍故受供養　善巧無邊色相中　　隨其意樂皆圓滿　金剛輪圍若虛空　　離諸塵染體清淨　是稱慈父解脫門　　斯大智中希少分加持金剛蓮華真言曰。",
        "from": "T18n0892_005:0601b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)鉢訥摩(二合)蘇珂(引)馱(引)囉摩訶(引)囉(引)誐蘇龕捺捺拶覩囉(引)喃捺婆(引)摩葛尾說吽(引)吽(引)歌哩也酤嚕薩嚩(二合)彌唵(引)嚩惹囉(二合)摩訶(引)按(奴回切)沙拶覩囉(引)難捺拏(引)野各渴誐目鎧葛囉素(引)那(引)他吽(引)吽(引)歌(引)哩閻(二合)酤囉薩嚩(二合)彌尸囉細唵(引)歌(引)囕緊拶梨計(二合)阿(引)歌犖(力角切)復說伽陀曰。",
        "from": "T18n0892_005:0601b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若不知空智　　超勝諸儀軌",
        "from": "T18n0892_005:0601c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　希求染欲心　　順世間輪轉",
        "from": "T18n0892_005:0601c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼彼部出生　　隨現諸色相",
        "from": "T18n0892_005:0601c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是故瑜伽者　　供養悉明了",
        "from": "T18n0892_005:0601c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若親近一切　　彼成就吉祥",
        "from": "T18n0892_005:0601c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　迴向大深心　　自他俱利樂",
        "from": "T18n0892_005:0601c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大悲空智金剛大教王儀軌經卷第五",
        "from": "T18n0892_005:0601c08_0",
        "context_with_next_sentence": false
    }
]