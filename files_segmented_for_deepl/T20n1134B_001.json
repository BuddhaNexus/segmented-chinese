[
    {
        "source_sentence": "金剛壽命陀羅尼經",
        "from": "T20n1134B_001:0577b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進試鴻臚卿大辨正",
        "from": "T20n1134B_001:0577b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智三藏奉　詔譯",
        "from": "T20n1134B_001:0577b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時毘盧遮那如來。",
        "from": "T20n1134B_001:0577b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於色界頂第四禪成等正覺。",
        "from": "T20n1134B_001:0577b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即下須彌山頂。",
        "from": "T20n1134B_001:0577b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛寶樓閣。",
        "from": "T20n1134B_001:0577b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空遍法界一切如來皆悉雲集。",
        "from": "T20n1134B_001:0577b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後圍繞異口同音。",
        "from": "T20n1134B_001:0577b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊轉妙法輪甚深祕密。",
        "from": "T20n1134B_001:0577b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂金剛界輪。",
        "from": "T20n1134B_001:0577b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降三世教令輪。",
        "from": "T20n1134B_001:0577b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍調伏法輪。",
        "from": "T20n1134B_001:0577b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切義成就輪。",
        "from": "T20n1134B_001:0577b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是四輪從毘盧遮那心出。",
        "from": "T20n1134B_001:0577b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一輪皆有三十七聖者。",
        "from": "T20n1134B_001:0577b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一真言一一三摩地。",
        "from": "T20n1134B_001:0577b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一契印威儀軌持。",
        "from": "T20n1134B_001:0577b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲願力。",
        "from": "T20n1134B_001:0577b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雜染佛剎。",
        "from": "T20n1134B_001:0577b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於淨妙世界。",
        "from": "T20n1134B_001:0577b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或隱或顯。",
        "from": "T20n1134B_001:0577b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉輪利樂度諸眾生各各不同。",
        "from": "T20n1134B_001:0577b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛。",
        "from": "T20n1134B_001:0577b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸如來請已。",
        "from": "T20n1134B_001:0577b28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲轉法輪。",
        "from": "T20n1134B_001:0577b28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時即入三摩地。",
        "from": "T20n1134B_001:0577b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀見摩醯首羅大自在天。",
        "from": "T20n1134B_001:0577b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剛強難化執持邪見。",
        "from": "T20n1134B_001:0577b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我寂靜大悲之身堪任調伏。",
        "from": "T20n1134B_001:0577c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是世尊入悲怒三摩地。",
        "from": "T20n1134B_001:0577c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從胸臆間出現五峯金剛大菩提心。",
        "from": "T20n1134B_001:0577c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出四面八臂威德熾盛奇特難覩降三世金剛菩薩身。",
        "from": "T20n1134B_001:0577c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍禮毘盧遮那如來及一切諸佛。",
        "from": "T20n1134B_001:0577c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊示教於我。",
        "from": "T20n1134B_001:0577c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何所作為。",
        "from": "T20n1134B_001:0577c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告降三世菩薩。",
        "from": "T20n1134B_001:0577c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今降伏彼難調伏諸大天等。",
        "from": "T20n1134B_001:0577c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令悉歸依諸佛法僧發菩提心。",
        "from": "T20n1134B_001:0577c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋即降伏一切諸天。",
        "from": "T20n1134B_001:0577c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡皆歸依佛法僧眾。",
        "from": "T20n1134B_001:0577c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯大自在天。",
        "from": "T20n1134B_001:0577c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特大威德而生拒敵。",
        "from": "T20n1134B_001:0577c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降三世菩薩種種苦治乃至於死(左踏大天右踏天后)於是毘盧遮那如來。",
        "from": "T20n1134B_001:0577c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大悲愍三摩地已。",
        "from": "T20n1134B_001:0577c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說金剛壽命陀羅尼。",
        "from": "T20n1134B_001:0577c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復入金剛壽命三昧耶。",
        "from": "T20n1134B_001:0577c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及結密印加持摩醯首羅天王。",
        "from": "T20n1134B_001:0577c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還復得甦重增壽命。",
        "from": "T20n1134B_001:0577c13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依諸佛發菩提心。",
        "from": "T20n1134B_001:0577c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂受記證得八地位。",
        "from": "T20n1134B_001:0577c14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛壽命真言。",
        "from": "T20n1134B_001:0577c14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日囉(二合)　喻　曬　薩嚩(二合)　訶(引)佛告執金剛菩薩。",
        "from": "T20n1134B_001:0577c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1134B_001:0577c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持念誦每日三時時別千遍。",
        "from": "T20n1134B_001:0577c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過現所有惡業因緣短命夭壽。",
        "from": "T20n1134B_001:0577c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由持此真言故信心清淨。",
        "from": "T20n1134B_001:0577c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業障消滅更增壽命。",
        "from": "T20n1134B_001:0577c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有修習三摩地者。",
        "from": "T20n1134B_001:0577c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現生不轉父母生身。",
        "from": "T20n1134B_001:0577c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲五神通陵空自在。",
        "from": "T20n1134B_001:0577c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當誦護身被甲真言曰。",
        "from": "T20n1134B_001:0577c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　砧(讁簪反)　嚩　日囉(二合)　欲次當觀欲字。",
        "from": "T20n1134B_001:0577c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明晃曜遍照。",
        "from": "T20n1134B_001:0577c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成大金剛壽命菩薩。",
        "from": "T20n1134B_001:0577c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以四字明引請菩薩。",
        "from": "T20n1134B_001:0577c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降入壇中受諸供養。",
        "from": "T20n1134B_001:0577c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四字密言曰。",
        "from": "T20n1134B_001:0577c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惹　吽　鑁　斛",
        "from": "T20n1134B_001:0577c30_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾聞佛所說信受奉行。",
        "from": "T20n1134B_001:0578a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛壽命陀羅尼經",
        "from": "T20n1134B_001:0578a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延寶四年五月。",
        "from": "T20n1134B_001:0578a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫栂尾藏本。",
        "from": "T20n1134B_001:0578a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律師淨嚴天明元辛丑年寫宇治慧心院本。",
        "from": "T20n1134B_001:0578a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈忍今年得件本令寫之。",
        "from": "T20n1134B_001:0578a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "挍勘以印版。",
        "from": "T20n1134B_001:0578a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋此經者。",
        "from": "T20n1134B_001:0578a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前經之略出。",
        "from": "T20n1134B_001:0578a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為不堪者唯示眼精。",
        "from": "T20n1134B_001:0578a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非是別本也。",
        "from": "T20n1134B_001:0578a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　和州長谷寺寓居劬勞釋快道記一挍加筆畢　　癸亥四月六日　慈順",
        "from": "T20n1134B_001:0578a07_9",
        "context_with_next_sentence": false
    }
]