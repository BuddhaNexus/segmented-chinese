[
    {
        "source_sentence": "警世",
        "from": "X63n1230_001:0081a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫不體道本。",
        "from": "X63n1230_001:0081a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒溺生死。",
        "from": "X63n1230_001:0081a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處胎卵濕化橫豎飛沈之類。",
        "from": "X63n1230_001:0081a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中失人身者。",
        "from": "X63n1230_001:0081a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大地之土。",
        "from": "X63n1230_001:0081a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得人身者。",
        "from": "X63n1230_001:0081a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如爪上之塵。",
        "from": "X63n1230_001:0081a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於人身中多生邊夷下賤。",
        "from": "X63n1230_001:0081a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及處中國。",
        "from": "X63n1230_001:0081a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或受女身。",
        "from": "X63n1230_001:0081a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為男子。",
        "from": "X63n1230_001:0081a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癃殘百疾。",
        "from": "X63n1230_001:0081a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設得丈夫十相具足者。",
        "from": "X63n1230_001:0081a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處恐畏世生五濁時。",
        "from": "X63n1230_001:0081a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以肉為身以氣為命。",
        "from": "X63n1230_001:0081a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一報之內如石火風燈。",
        "from": "X63n1230_001:0081a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逝波殘照瞬息而已。",
        "from": "X63n1230_001:0081a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中少天非橫殂者。",
        "from": "X63n1230_001:0081a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不計其數。",
        "from": "X63n1230_001:0081a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得天年壽極耳順。",
        "from": "X63n1230_001:0081a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬中無一。",
        "from": "X63n1230_001:0081a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫得知命之歲。",
        "from": "X63n1230_001:0081a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除童稚無知。",
        "from": "X63n1230_001:0081a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至三十豪四十富。",
        "from": "X63n1230_001:0081a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且約其間三十年。",
        "from": "X63n1230_001:0081a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有疾病灾禍愁憂苦惱。",
        "from": "X63n1230_001:0081a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居強半矣。",
        "from": "X63n1230_001:0081a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以昔人有言。",
        "from": "X63n1230_001:0081a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮生一月之中。",
        "from": "X63n1230_001:0081a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可開口而咲。",
        "from": "X63n1230_001:0081a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只四五日矣。",
        "from": "X63n1230_001:0081a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知憂長喜促樂少苦多。",
        "from": "X63n1230_001:0081a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如在萬仞之危峯。",
        "from": "X63n1230_001:0081a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似處千尋之滄海。",
        "from": "X63n1230_001:0081a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱得少樂畢慮漂沈。",
        "from": "X63n1230_001:0081a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且夫有生勞我處胎。",
        "from": "X63n1230_001:0081a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有老奪我壯色。",
        "from": "X63n1230_001:0081a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有病損我形貌。",
        "from": "X63n1230_001:0081a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有死壞我神靈。",
        "from": "X63n1230_001:0081a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有榮縱我驕奢。",
        "from": "X63n1230_001:0081a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有辱敗我意氣。",
        "from": "X63n1230_001:0081a18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有貴使我憍倨。",
        "from": "X63n1230_001:0081a19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有賤挫我行藏。",
        "from": "X63n1230_001:0081a19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有富恣我貪婪。",
        "from": "X63n1230_001:0081a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有貧乏我依報。",
        "from": "X63n1230_001:0081a20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有樂動我情地。",
        "from": "X63n1230_001:0081a20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有苦痛我精神。",
        "from": "X63n1230_001:0081a20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有讚起我高心。",
        "from": "X63n1230_001:0081a21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有毀滅我聲價。",
        "from": "X63n1230_001:0081a21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至寒則逼切我體。",
        "from": "X63n1230_001:0081a21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熱則煩悶我襟。",
        "from": "X63n1230_001:0081a22_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴則乾我喉。",
        "from": "X63n1230_001:0081a22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饑則羸我腹。",
        "from": "X63n1230_001:0081a22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驚則懾我魄。",
        "from": "X63n1230_001:0081a22_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懼則喪我魂。",
        "from": "X63n1230_001:0081a23_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂則撓我神。",
        "from": "X63n1230_001:0081a23_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惱則敗我志。",
        "from": "X63n1230_001:0081a23_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順則長我愛。",
        "from": "X63n1230_001:0081a23_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逆則起我憎。",
        "from": "X63n1230_001:0081a24_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親則牽我情。",
        "from": "X63n1230_001:0081a24_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疎則生我恨。",
        "from": "X63n1230_001:0081a24_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "害則殞我體。",
        "from": "X63n1230_001:0081a24_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愁則結我腸。",
        "from": "X63n1230_001:0081b01_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至遇境生心。",
        "from": "X63n1230_001:0081b01_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨情動念。",
        "from": "X63n1230_001:0081b01_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或美或惡俱不稱懷。",
        "from": "X63n1230_001:0081b01_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆長業輪盡喪道本。",
        "from": "X63n1230_001:0081b02_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其或更詭於君悖於父。",
        "from": "X63n1230_001:0081b02_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傲其物趨其時。",
        "from": "X63n1230_001:0081b03_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獸其心狐其意。",
        "from": "X63n1230_001:0081b03_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟其利徇其名。",
        "from": "X63n1230_001:0081b03_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誑其人諂其行。",
        "from": "X63n1230_001:0081b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "附其勢欺其孤。",
        "from": "X63n1230_001:0081b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淵其殃崇其業。",
        "from": "X63n1230_001:0081b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扇其火吹其風。",
        "from": "X63n1230_001:0081b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驟其塵背其覺。",
        "from": "X63n1230_001:0081b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪其種睽其真。",
        "from": "X63n1230_001:0081b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但顧前非慮後。",
        "from": "X63n1230_001:0081b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口謀去靡思回。",
        "from": "X63n1230_001:0081b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯求生焉知滅。",
        "from": "X63n1230_001:0081b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則念念燒煑。",
        "from": "X63n1230_001:0081b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步步溝隍矣。",
        "from": "X63n1230_001:0081b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今或得剎那在世。",
        "from": "X63n1230_001:0081b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須蘊仁悲。",
        "from": "X63n1230_001:0081b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行善修心除非去惡。",
        "from": "X63n1230_001:0081b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書云。",
        "from": "X63n1230_001:0081b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作善降之百祥。",
        "from": "X63n1230_001:0081b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作不善降之百殃。",
        "from": "X63n1230_001:0081b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以世間逆順種種因緣。",
        "from": "X63n1230_001:0081b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空受身心妄苦皆為。",
        "from": "X63n1230_001:0081b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知三界唯是一心。",
        "from": "X63n1230_001:0081b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前五識眼耳鼻舌身及第八識。",
        "from": "X63n1230_001:0081b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是現量所得。",
        "from": "X63n1230_001:0081b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無心外法。",
        "from": "X63n1230_001:0081b11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以第六明了意識。",
        "from": "X63n1230_001:0081b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比量計度而成外境。",
        "from": "X63n1230_001:0081b11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全是想生隨念而至。",
        "from": "X63n1230_001:0081b12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無想念萬法無形。",
        "from": "X63n1230_001:0081b12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "X63n1230_001:0081b12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想滅間靜識停無為。",
        "from": "X63n1230_001:0081b13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "X63n1230_001:0081b13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法不牢固。",
        "from": "X63n1230_001:0081b13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯立在於念。",
        "from": "X63n1230_001:0081b13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善解見空者。",
        "from": "X63n1230_001:0081b14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切無想念。",
        "from": "X63n1230_001:0081b14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若了一心之旨。",
        "from": "X63n1230_001:0081b14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心外自然無法可陳。",
        "from": "X63n1230_001:0081b14_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有欣戚關懷是非干念。",
        "from": "X63n1230_001:0081b15_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛頌云。",
        "from": "X63n1230_001:0081b15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未達境唯心。",
        "from": "X63n1230_001:0081b15_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起種種分別。",
        "from": "X63n1230_001:0081b16_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達境唯心已。",
        "from": "X63n1230_001:0081b16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別即不生。",
        "from": "X63n1230_001:0081b16_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既了境唯心。",
        "from": "X63n1230_001:0081b16_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便捨外塵相。",
        "from": "X63n1230_001:0081b17_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此息分別。",
        "from": "X63n1230_001:0081b17_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟平等真空。",
        "from": "X63n1230_001:0081b17_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故起信論云。",
        "from": "X63n1230_001:0081b17_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切境界唯心妄動。",
        "from": "X63n1230_001:0081b18_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心若不起。",
        "from": "X63n1230_001:0081b18_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切境界相滅。",
        "from": "X63n1230_001:0081b18_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯一真心徧一切處。",
        "from": "X63n1230_001:0081b19_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故三界虗偽。",
        "from": "X63n1230_001:0081b19_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯心所作。",
        "from": "X63n1230_001:0081b19_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離心即無六塵境界。",
        "from": "X63n1230_001:0081b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切分別。",
        "from": "X63n1230_001:0081b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即分別自心。",
        "from": "X63n1230_001:0081b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不見心。",
        "from": "X63n1230_001:0081b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相可得。",
        "from": "X63n1230_001:0081b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先德云。",
        "from": "X63n1230_001:0081b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心外有法。",
        "from": "X63n1230_001:0081b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死論迴。",
        "from": "X63n1230_001:0081b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心外無法。",
        "from": "X63n1230_001:0081b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死永弃。",
        "from": "X63n1230_001:0081b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X63n1230_001:0081b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法所生唯心所現。",
        "from": "X63n1230_001:0081b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論云。",
        "from": "X63n1230_001:0081b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界無別法。",
        "from": "X63n1230_001:0081b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是一心作。",
        "from": "X63n1230_001:0081b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既信一心。",
        "from": "X63n1230_001:0081b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須以禪定冥合。",
        "from": "X63n1230_001:0081b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經云。",
        "from": "X63n1230_001:0081b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能教三千大千世界眾生令行十善。",
        "from": "X63n1230_001:0081b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如一食頃一心靜處入一相法門。",
        "from": "X63n1230_001:0081b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能諦了自心。",
        "from": "X63n1230_001:0081c01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此定慧相應。",
        "from": "X63n1230_001:0081c01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能不動塵勞。",
        "from": "X63n1230_001:0081c02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便成正覺。",
        "from": "X63n1230_001:0081c02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平生所遇。",
        "from": "X63n1230_001:0081c02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫越於斯。",
        "from": "X63n1230_001:0081c02_25",
        "context_with_next_sentence": false
    }
]