[
    {
        "source_sentence": "如意輪菩薩觀門義注祕訣",
        "from": "T20n1088_001:0215c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 唵字。",
        "from": "T20n1088_001:0215c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法流注義。",
        "from": "T20n1088_001:0215c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所得以為方便。",
        "from": "T20n1088_001:0215c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺不可得。",
        "from": "T20n1088_001:0216a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 嚩字。",
        "from": "T20n1088_001:0216a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法超越之義。",
        "from": "T20n1088_001:0216a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言語道不可得。",
        "from": "T20n1088_001:0216a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 囉字。",
        "from": "T20n1088_001:0216a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法離塵義。",
        "from": "T20n1088_001:0216a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了亦不可得。",
        "from": "T20n1088_001:0216a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 娜字。",
        "from": "T20n1088_001:0216a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法施義。",
        "from": "T20n1088_001:0216a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟不可得。",
        "from": "T20n1088_001:0216a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 跛字。",
        "from": "T20n1088_001:0216a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法勝義。",
        "from": "T20n1088_001:0216a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性相不可得。",
        "from": "T20n1088_001:0216a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 娜麼(二合)字。",
        "from": "T20n1088_001:0216a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法離我取執不可得。",
        "from": "T20n1088_001:0216a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 吽字。",
        "from": "T20n1088_001:0216a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法了義亦不可得。",
        "from": "T20n1088_001:0216a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右如上布列諸字。",
        "from": "T20n1088_001:0216a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡作欝金之色。",
        "from": "T20n1088_001:0216a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從本尊口引入身心口輪中。",
        "from": "T20n1088_001:0216a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分明布列已。",
        "from": "T20n1088_001:0216a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一諦審觀之。",
        "from": "T20n1088_001:0216a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此三昧耶速獲一切智。",
        "from": "T20n1088_001:0216a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫瑜伽法念誦數畢。",
        "from": "T20n1088_001:0216a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即布諸字。",
        "from": "T20n1088_001:0216a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更於身上布列小心真言。",
        "from": "T20n1088_001:0216a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於字上分明觀照。",
        "from": "T20n1088_001:0216a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日初出。",
        "from": "T20n1088_001:0216a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明赫奕廣極無邊。",
        "from": "T20n1088_001:0216a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯觀照。",
        "from": "T20n1088_001:0216a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當證法身三昧。",
        "from": "T20n1088_001:0216a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　唵字安於頂　　囉字置於額",
        "from": "T20n1088_001:0216a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　囉字布兩目　　娜字觀於口",
        "from": "T20n1088_001:0216a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　跛字安於心　　娜麼(二合)字置二膊　吽字安臍輪　以前觀字門　　速悟無生理　不久當成就　　獲得如來智如意輪心真言。",
        "from": "T20n1088_001:0216a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布列梵字菩提心月輪。",
        "from": "T20n1088_001:0216a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意輪真言注義。",
        "from": "T20n1088_001:0216a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩　謨(歸命義)　囉　怛曩(寶義)　怛囉(二合)　夜　野(三義所謂歸命三寶敬)曩　莫(稽首義)　阿　哩野(二合)　嚩　路　枳　諦濕嚩　囉　耶(聖觀自在)　[曰/月]　地　薩　怛嚩(二合)　野(菩薩)摩　訶　薩　怛嚩(二合)　野(大菩薩)　摩　賀　迦　嚕　抳迦　野(大慈悲者)　怛　儞也(二合)　他(所謂開如來藏說真言)唵 其字成於三身義也。",
        "from": "T20n1088_001:0216a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵 之一字。",
        "from": "T20n1088_001:0216b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂唵阿摩   等三字共成。",
        "from": "T20n1088_001:0216b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵 字者一切法生不可得義。",
        "from": "T20n1088_001:0216b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿 字者一切法本不生義。",
        "from": "T20n1088_001:0216b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩 字者一切法我無所得義。",
        "from": "T20n1088_001:0216b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又釋云。",
        "from": "T20n1088_001:0216b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵 字化身義。",
        "from": "T20n1088_001:0216b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿 字者報身義。",
        "from": "T20n1088_001:0216b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩 字者法身義。",
        "from": "T20n1088_001:0216b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此三字契實相理。",
        "from": "T20n1088_001:0216b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則成稽首禮一切如來。",
        "from": "T20n1088_001:0216b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如來無觀頂義。",
        "from": "T20n1088_001:0216b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斫　羯囉(二合)　靺　哩底(能轉無上法輪義亦摧破義)震　跢　末　抳思惟義。",
        "from": "T20n1088_001:0216b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如來寶義。",
        "from": "T20n1088_001:0216b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶有六種。",
        "from": "T20n1088_001:0216b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿眾生願故。",
        "from": "T20n1088_001:0216b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩　訶　鉢　那麼(二合大蓮華也表淨諸非法染本不染故)嚕嚕   。",
        "from": "T20n1088_001:0216b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離塵垢義。",
        "from": "T20n1088_001:0216b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵有二種。",
        "from": "T20n1088_001:0216b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故重稱也。",
        "from": "T20n1088_001:0216b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二塵者。",
        "from": "T20n1088_001:0216b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂內塵外塵。",
        "from": "T20n1088_001:0216b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內塵即是五根。",
        "from": "T20n1088_001:0216b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼耳鼻舌身。",
        "from": "T20n1088_001:0216b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外塵色聲香味觸。",
        "from": "T20n1088_001:0216b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二種塵。",
        "from": "T20n1088_001:0216b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆無所得以為方便。",
        "from": "T20n1088_001:0216b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成瑜伽觀智。",
        "from": "T20n1088_001:0216b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底瑟吒  。",
        "from": "T20n1088_001:0216b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋云住義。",
        "from": "T20n1088_001:0216b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云無住義。",
        "from": "T20n1088_001:0216b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無住以為一切法本。",
        "from": "T20n1088_001:0216b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云無住涅槃不住生死。",
        "from": "T20n1088_001:0216b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由大智故不著生死。",
        "from": "T20n1088_001:0216b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由大悲故不住涅槃。",
        "from": "T20n1088_001:0216b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入嚩攞  。",
        "from": "T20n1088_001:0216b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋云熾然義。",
        "from": "T20n1088_001:0216b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明照曜遍滿十方虛空法界。",
        "from": "T20n1088_001:0216b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驚覺諸佛菩薩聖眾。",
        "from": "T20n1088_001:0216b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降集普赴。",
        "from": "T20n1088_001:0216b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下召一切天龍八部諸有情類。",
        "from": "T20n1088_001:0216b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益加持故。",
        "from": "T20n1088_001:0216b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿羯里灑野    。",
        "from": "T20n1088_001:0216b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請召義。",
        "from": "T20n1088_001:0216b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此請召。",
        "from": "T20n1088_001:0216b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩天龍八部。",
        "from": "T20n1088_001:0216b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應召而至。",
        "from": "T20n1088_001:0216b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉雲集加持護念。",
        "from": "T20n1088_001:0216b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽 字者一切法無因義。",
        "from": "T20n1088_001:0216c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云菩提道場。",
        "from": "T20n1088_001:0216c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛頂瑜伽經說。",
        "from": "T20n1088_001:0216c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔發菩提心即坐菩提道場。",
        "from": "T20n1088_001:0216c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉正法輪。",
        "from": "T20n1088_001:0216c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此相應。",
        "from": "T20n1088_001:0216c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言一字則能證悟一切佛法。",
        "from": "T20n1088_001:0216c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念證悟佛法之時。",
        "from": "T20n1088_001:0216c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具薩婆若智。",
        "from": "T20n1088_001:0216c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直至究竟坐金剛座。",
        "from": "T20n1088_001:0216c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四魔現前則入大慈三摩地。",
        "from": "T20n1088_001:0216c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏四魔故則成正覺。",
        "from": "T20n1088_001:0216c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四魔者。",
        "from": "T20n1088_001:0216c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂蘊魔煩惱魔死魔天魔。",
        "from": "T20n1088_001:0216c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉自降伏。",
        "from": "T20n1088_001:0216c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復云法無因者。",
        "from": "T20n1088_001:0216c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法無因。",
        "from": "T20n1088_001:0216c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依勝義諦果亦無得。",
        "from": "T20n1088_001:0216c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無因果故本來清淨。",
        "from": "T20n1088_001:0216c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泮字者是破壞義。",
        "from": "T20n1088_001:0216c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云摧壞義。",
        "from": "T20n1088_001:0216c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得成佛時摧壞四魔。",
        "from": "T20n1088_001:0216c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云三德之中。",
        "from": "T20n1088_001:0216c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷德之中得義。",
        "from": "T20n1088_001:0216c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由以智。",
        "from": "T20n1088_001:0216c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷三界九地位煩惱習氣皆悉斷。",
        "from": "T20n1088_001:0216c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德智慧二種資糧悉皆圓滿。",
        "from": "T20n1088_001:0216c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始來一切有情以為己親。",
        "from": "T20n1088_001:0216c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念彼恩故。",
        "from": "T20n1088_001:0216c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣轉法輪處。",
        "from": "T20n1088_001:0216c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說十二行法輪也。",
        "from": "T20n1088_001:0216c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吒 字者一切法無所得義。",
        "from": "T20n1088_001:0216c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其吒字梵書形如半月。",
        "from": "T20n1088_001:0216c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋云一切法無我。",
        "from": "T20n1088_001:0216c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所得以為方便。",
        "from": "T20n1088_001:0216c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則成生空生空半故。",
        "from": "T20n1088_001:0216c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩嚩(引) 等無言說義。",
        "from": "T20n1088_001:0216c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成法空智。",
        "from": "T20n1088_001:0216c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿字義。",
        "from": "T20n1088_001:0216c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云大福德成就義。",
        "from": "T20n1088_001:0216c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訶 字是斷煩惱義。",
        "from": "T20n1088_001:0216c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸有情。",
        "from": "T20n1088_001:0216c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積大福德斷害煩惱及隨煩惱一切習氣。",
        "from": "T20n1088_001:0216c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他身中遍滿字之教。",
        "from": "T20n1088_001:0216c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得無餘依無住涅槃修行瑜伽者。",
        "from": "T20n1088_001:0216c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結契誦真言。",
        "from": "T20n1088_001:0216c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定意專注於此一字。",
        "from": "T20n1088_001:0216c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由與真實道理相應思惟。",
        "from": "T20n1088_001:0216c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時能除能緣所緣自他平等同體大悲。",
        "from": "T20n1088_001:0216c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓集一切福德智慧。",
        "from": "T20n1088_001:0216c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在除遣一切災禍非命。",
        "from": "T20n1088_001:0216c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人見聞歡喜。",
        "from": "T20n1088_001:0216c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所出言辭天人敬順不敢違越。",
        "from": "T20n1088_001:0216c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時眾聖見前。",
        "from": "T20n1088_001:0216c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得生極樂淨妙國土。",
        "from": "T20n1088_001:0216c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大集會中。",
        "from": "T20n1088_001:0217a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生見無量壽佛。",
        "from": "T20n1088_001:0217a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽聞正法頓證無上菩提如意輪菩薩六臂相頌。",
        "from": "T20n1088_001:0217a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　手持如意寶　　六臂身金色",
        "from": "T20n1088_001:0217a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　頂髻寶莊嚴　　自在王說法",
        "from": "T20n1088_001:0217a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　第一手思惟　　愍念有情故",
        "from": "T20n1088_001:0217a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　第二持意寶　　能滿一切願",
        "from": "T20n1088_001:0217a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　第三持念珠　　為度傍生苦",
        "from": "T20n1088_001:0217a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　左按光明山　　成就無傾動",
        "from": "T20n1088_001:0217a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　第二持蓮手　　能淨諸非法",
        "from": "T20n1088_001:0217a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　第三手持輪　　能轉無上法",
        "from": "T20n1088_001:0217a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寶能隨施故　　山表不動故",
        "from": "T20n1088_001:0217a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　蓮性不染故　　輪摧障惱故",
        "from": "T20n1088_001:0217a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　六臂廣莊嚴　　能遊於六道",
        "from": "T20n1088_001:0217a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以大悲方便　　斷諸有情苦",
        "from": "T20n1088_001:0217a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身流千光明　　隨念能普照",
        "from": "T20n1088_001:0217a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　猶如於明鏡　　能現於萬像",
        "from": "T20n1088_001:0217a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自心本不生　　法性圓寂故",
        "from": "T20n1088_001:0217a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　出金剛頂瑜伽經說。",
        "from": "T20n1088_001:0217a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心中心真言",
        "from": "T20n1088_001:0217a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵字(一切法流注義。",
        "from": "T20n1088_001:0217a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所得以為方便。",
        "from": "T20n1088_001:0217a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺不可得)。",
        "from": "T20n1088_001:0217a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩字(一切法超越之義。",
        "from": "T20n1088_001:0217a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言語道斷不可得)。",
        "from": "T20n1088_001:0217a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囉字(一切法離塵義。",
        "from": "T20n1088_001:0217a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了亦不可得)。",
        "from": "T20n1088_001:0217a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜字(一切法施義。",
        "from": "T20n1088_001:0217a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟無所得)。",
        "from": "T20n1088_001:0217a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跛字(一切法勝義。",
        "from": "T20n1088_001:0217a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性相不可得)。",
        "from": "T20n1088_001:0217a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜麼(二合)字(一切法離我取孰義不可得)。",
        "from": "T20n1088_001:0217a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字(一切諸法了義亦不可得)。",
        "from": "T20n1088_001:0217a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右如上布列諸字。",
        "from": "T20n1088_001:0217a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫作欝金之色。",
        "from": "T20n1088_001:0217a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞享三年十月二十一日點校了",
        "from": "T20n1088_001:0217a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　　　　淨嚴(四十八歲)元祿十六年正月十七日以淨嚴和上之本　再校了　　　　　　　　　　尊教　寶永五戊子十二月二十五除夜一校了",
        "from": "T20n1088_001:0217a27_0",
        "context_with_next_sentence": false
    }
]