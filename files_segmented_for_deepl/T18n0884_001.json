[
    {
        "source_sentence": "佛說祕密相經卷上",
        "from": "T18n0884_001:0463b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T18n0884_001:0463b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫沙門臣施護等",
        "from": "T18n0884_001:0463b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯",
        "from": "T18n0884_001:0463b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T18n0884_001:0463b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊住一切如來三昧界中。",
        "from": "T18n0884_001:0463b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩摩訶薩眾皆悉圓滿。",
        "from": "T18n0884_001:0463b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時世尊大毘盧遮那如來。",
        "from": "T18n0884_001:0463b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從諸佛智三摩地起。",
        "from": "T18n0884_001:0463b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍觀察一切大眾。",
        "from": "T18n0884_001:0463b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當彼如是觀眾會時。",
        "from": "T18n0884_001:0463b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切如來并諸菩薩摩訶薩眾。",
        "from": "T18n0884_001:0463b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉於世尊大毘盧遮那如來左月曼拏羅中依止而住。",
        "from": "T18n0884_001:0463b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0463b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於世尊大毘盧遮那如來前。",
        "from": "T18n0884_001:0463b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌諦誠作是白言。",
        "from": "T18n0884_001:0463b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊祕密法儀甚深廣大。",
        "from": "T18n0884_001:0463b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何此中要略而修。",
        "from": "T18n0884_001:0463b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是要略法中我當受行。",
        "from": "T18n0884_001:0463b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_001:0463b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚金剛手菩薩摩訶薩言。",
        "from": "T18n0884_001:0463b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉金剛手。",
        "from": "T18n0884_001:0463b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今善問祕密法儀甚深廣大。",
        "from": "T18n0884_001:0463b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝要略而說。",
        "from": "T18n0884_001:0463b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂若修習瑜伽行者。",
        "from": "T18n0884_001:0463b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡入舍中先當觀想祕密文字。",
        "from": "T18n0884_001:0463b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作已護淨。",
        "from": "T18n0884_001:0463b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於舌端想有阿字。",
        "from": "T18n0884_001:0463b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字想成淨妙月輪。",
        "from": "T18n0884_001:0463b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月輪上想有吽字。",
        "from": "T18n0884_001:0463b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字復成五股白色大金剛杵。",
        "from": "T18n0884_001:0463b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀想已。",
        "from": "T18n0884_001:0463b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當作金剛合掌安自頂上。",
        "from": "T18n0884_001:0463b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此大明而作護淨。",
        "from": "T18n0884_001:0463b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰。",
        "from": "T18n0884_001:0463b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)娑嚩(二合引)婆嚩秫馱(引)薩哩嚩(二合)達哩摩(二合引一句)莎婆(引)嚩秫度(引)[亢*欠](呼郎切下同二)誦是大明已。",
        "from": "T18n0884_001:0463b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人次當發誓願言。",
        "from": "T18n0884_001:0463b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願十方一切諸佛一切菩薩攝受於我。",
        "from": "T18n0884_001:0463b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我某甲於此時中作成就事。",
        "from": "T18n0884_001:0463c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從今日發起無上大菩提心。",
        "from": "T18n0884_001:0463c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至當坐菩提道場堅固不退。",
        "from": "T18n0884_001:0463c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說頌曰。",
        "from": "T18n0884_001:0463c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願我即同三世佛　　決定當成正覺尊　攝善法及攝律儀　　饒益眾生戒具足　而此三聚淨妙戒　　願我受持悉堅固　諸佛妙法及僧伽　　最勝三寶垂加護　最初三寶攝受我　　願從諸佛相應生　金剛杵及彼印鈴　　我所受持悉真實　彼阿闍梨攝受我　　廣大最上金剛部　四種施法我常行　　日日六時如是作　彼大寶部相應法　　三昧中起勝意樂　我攝受諸正法門　　內外及彼三乘法　大蓮華部中清淨　　出生無上大菩提　一切誓願悉相應　　真實法中攝受我　供養事業隨應作　　大羯磨部中最上　發起無上菩提心　　及彼出生諸勝行　普攝一切行周遍　　廣為利樂諸眾生　未得度者我當度　　未解脫者令解脫　諸有未獲安隱者　　我當為開安隱門　所有一切諸眾生　　普使安住涅槃地爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_001:0463c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0463c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說普盡三摩地真實出生諸三摩地根本法門。",
        "from": "T18n0884_001:0463c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人應當結禪定印。",
        "from": "T18n0884_001:0463c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法安住已。",
        "from": "T18n0884_001:0463c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀諸法無我平等。",
        "from": "T18n0884_001:0463c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於諸法見有內外。",
        "from": "T18n0884_001:0463c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即於心有其蓋障。",
        "from": "T18n0884_001:0463c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知離心無別有法。",
        "from": "T18n0884_001:0463c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復意中作是思念。",
        "from": "T18n0884_001:0463c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法不生而自性明亮。",
        "from": "T18n0884_001:0463c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即一切法本來不生性。",
        "from": "T18n0884_001:0463c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所念即住是心。",
        "from": "T18n0884_001:0463c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃以自性明亮可愛音聲。",
        "from": "T18n0884_001:0464a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦彼開覺本心大明章句。",
        "from": "T18n0884_001:0464a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當誦念時應觀心月曼拏羅相。",
        "from": "T18n0884_001:0464a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰。",
        "from": "T18n0884_001:0464a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)唧多鉢羅(二合)底吠(引)鄧羯嚕(引)彌(一句)復次頌曰。",
        "from": "T18n0884_001:0464a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　真實圓滿大清淨　　其猶虛空無垢翳　一切麁重悉蠲除　　而復破遣邪分別　彼諸煩惱垢淨故　　復如朗月見初生　諸佛功德聚無邊　　悉入阿字等妙相其相云何。",
        "from": "T18n0884_001:0464a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂。",
        "from": "T18n0884_001:0464a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿阿(引)壹翳嗢污哩黎(引)哩黎(引)伊愛鄔奧暗惡爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0464a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於世尊大毘盧遮那如來菩提心月曼拏羅中。",
        "from": "T18n0884_001:0464a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依止而住作是白言。",
        "from": "T18n0884_001:0464a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊菩提心月曼拏羅者。",
        "from": "T18n0884_001:0464a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有何等最勝功德。",
        "from": "T18n0884_001:0464a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_001:0464a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0464a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要略宣說菩提心月曼拏羅相。",
        "from": "T18n0884_001:0464a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手當知諸佛無邊功德。",
        "from": "T18n0884_001:0464a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入阿字等諸妙相時。",
        "from": "T18n0884_001:0464a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水精月淨光明相。",
        "from": "T18n0884_001:0464a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入已。",
        "from": "T18n0884_001:0464a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復從自性清淨明亮智心。",
        "from": "T18n0884_001:0464a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生變化作用事業。",
        "from": "T18n0884_001:0464a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦大明微妙章句發菩提心大明曰。",
        "from": "T18n0884_001:0464a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)[曰/月]提唧當(一句)母怛波(二合引)捺夜(引)彌(二)復次頌曰。",
        "from": "T18n0884_001:0464a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨此出生大悲心　　普攝眾生諸所作　一切善法悉周圓　　一切煩惱皆不著　月曼拏羅左右中　　菩提心月為第二　所有諸佛功德門　　復入迦字等妙相如是入已。",
        "from": "T18n0884_001:0464a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃與諸法影像相應。",
        "from": "T18n0884_001:0464b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何。",
        "from": "T18n0884_001:0464b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂。",
        "from": "T18n0884_001:0464b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦佉誐伽昂(鼻音輕呼)左蹉惹(仁左切)酇(重呼)倪(倪也切輕呼)叱姹拏(尼轄切)茶(重呼)拏(平聲輕呼)多他捺陀(重呼)那(輕呼)波頗末婆(重呼)摩(輕呼)邪囉羅嚩設沙薩訶乞叉(合呼)此等文字。",
        "from": "T18n0884_001:0464b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是菩提心月曼拏羅相。",
        "from": "T18n0884_001:0464b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此曼拏羅所有法用行相次第如餘教說。",
        "from": "T18n0884_001:0464b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0464b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於世尊大毘盧遮那如來右月曼拏羅中。",
        "from": "T18n0884_001:0464b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依止而住作是白言。",
        "from": "T18n0884_001:0464b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊而此右月曼拏羅中當云何入。",
        "from": "T18n0884_001:0464b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_001:0464b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩摩訶薩言。",
        "from": "T18n0884_001:0464b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手當知金剛杵即是金剛智。",
        "from": "T18n0884_001:0464b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能生諸佛勝功德聚。",
        "from": "T18n0884_001:0464b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛杵者其相五股依法所成。",
        "from": "T18n0884_001:0464b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝復有光焰熾盛。",
        "from": "T18n0884_001:0464b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是光從彼普賢心出。",
        "from": "T18n0884_001:0464b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為堅固因起諸行相。",
        "from": "T18n0884_001:0464b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入曼拏羅者。",
        "from": "T18n0884_001:0464b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀自身即是五智金剛杵相。",
        "from": "T18n0884_001:0464b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀時誦此大明曰。",
        "from": "T18n0884_001:0464b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)底瑟姹(二合)嚩日囉(二合一句)復次頌曰。",
        "from": "T18n0884_001:0464b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛於三阿僧祇劫　　修成菩提最上行　歷位至登妙覺尊　　皆由清淨無漏智　菩提妙月曼拏羅　　最上清淨離諸垢　於中觀想智金剛　　是即五智金剛杵世尊大毘盧遮那如來作此所說。",
        "from": "T18n0884_001:0464b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂即表示執金剛者。",
        "from": "T18n0884_001:0464b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次當想盡虛空界。",
        "from": "T18n0884_001:0464b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍普聚而為分量。",
        "from": "T18n0884_001:0464b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都成一大金剛杵相然後行人觀想己身即金剛杵。",
        "from": "T18n0884_001:0464b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣略相應。",
        "from": "T18n0884_001:0464b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀想時誦此大明曰。",
        "from": "T18n0884_001:0464b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合引)怛摩(二合)酤(引)[亢*欠](一句)復次頌曰。",
        "from": "T18n0884_001:0464c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所有一切諸佛身　　悉無對礙無依止　無生無作淨無瑕　　是中無性等亦離　不斷不破亦不壞　　法身無染本清淨　金剛堅固體出生　　如來金剛身無上爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0464c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世尊大毘盧遮那如來右月曼拏羅中。",
        "from": "T18n0884_001:0464c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依止住已作是白言。",
        "from": "T18n0884_001:0464c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊復云何觀彼金剛杵。",
        "from": "T18n0884_001:0464c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_001:0464c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍觀察諸如來已。",
        "from": "T18n0884_001:0464c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言諦聽諸如來。",
        "from": "T18n0884_001:0464c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今宣說佛影像中觀影像相。",
        "from": "T18n0884_001:0464c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何。",
        "from": "T18n0884_001:0464c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂薩埵金剛相。",
        "from": "T18n0884_001:0464c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸相具足。",
        "from": "T18n0884_001:0464c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當如是觀即佛影像相。",
        "from": "T18n0884_001:0464c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀想時誦此大明曰。",
        "from": "T18n0884_001:0464c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)野他(引)薩哩嚩(二合)怛他(引)誐多(引一句)塞怛(二合)他(引)[亢*欠](二)復次頌曰。",
        "from": "T18n0884_001:0464c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所有諸佛身祕密　　境界性智行亦然　以五相成正覺尊　　諸佛成滿皆清淨爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0464c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於世尊大毘盧遮那如來後月曼拏羅中。",
        "from": "T18n0884_001:0464c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依止而住作是白言。",
        "from": "T18n0884_001:0464c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何是祕密。",
        "from": "T18n0884_001:0464c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復云何是境界性智行等亦然。",
        "from": "T18n0884_001:0464c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_001:0464c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱讚金剛手菩薩摩訶薩。",
        "from": "T18n0884_001:0464c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說頌曰。",
        "from": "T18n0884_001:0464c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善哉金剛大薩埵　　善哉金剛聖妙寶　善哉金剛正法門　　善哉金剛眾事業　善說此經祕密義　　是即無上金剛乘　所有諸佛祕密門　　大乘現證法皆攝　修成就時妙清淨　　成佛果已獲妙樂　汝問祕密等云何　　謂蓮華及金剛杵　此即如來大祕密　　一切諸佛從是生　若能依法諦心觀　　於剎那間得成佛佛說祕密相經卷上",
        "from": "T18n0884_001:0464c27_0",
        "context_with_next_sentence": false
    }
]