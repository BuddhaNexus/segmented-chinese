        "from": "T21n1303_001:0421c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩言。",
        "from": "T21n1303_001:0422a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此真言最上祕密。",
        "from": "T21n1303_001:0422a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與眾生滿一切願。",
        "from": "T21n1303_001:0422a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人求長壽等。",
        "from": "T21n1303_001:0422a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於八月七日起首。",
        "from": "T21n1303_001:0422a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持齋戒至十四日夜。",
        "from": "T21n1303_001:0422a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法供養宿曜至十五日。",
        "from": "T21n1303_001:0422a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一晝夜中讀誦此陀羅尼。",
        "from": "T21n1303_001:0422a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人得長壽至九十九歲。",
        "from": "T21n1303_001:0422a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有雷電龍鬼諸惡星曜皆不能怖。",
        "from": "T21n1303_001:0422a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得宿命智所願如意。",
        "from": "T21n1303_001:0422a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切宿曜聞佛所說。",
        "from": "T21n1303_001:0422b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉善哉甚為希有。",
        "from": "T21n1303_001:0422b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等受持。",
        "from": "T21n1303_001:0422b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以頭面禮世尊足忽然不現。",
        "from": "T21n1303_001:0422b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說聖曜母陀羅尼經",
        "from": "T21n1303_001:0422b04_0",
        "context_with_next_sentence": false
    }
]