[
    {
        "source_sentence": "佛說聖曜母陀羅尼經",
        "from": "T21n1303_001:0421a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T21n1303_001:0421a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教大師臣法天奉　詔譯",
        "from": "T21n1303_001:0421a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1303_001:0421a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在阿拏迦嚩帝大城。",
        "from": "T21n1303_001:0421a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時有無數天龍夜叉乾闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人。",
        "from": "T21n1303_001:0421a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及木星火星金星水星土星。",
        "from": "T21n1303_001:0421a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太陰太陽羅睺計都。",
        "from": "T21n1303_001:0421a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等二十七曜恭敬圍遶。",
        "from": "T21n1303_001:0421a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大金剛三昧莊嚴道場。",
        "from": "T21n1303_001:0421a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有無數千菩薩摩訶薩眾。",
        "from": "T21n1303_001:0421a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰金剛手菩薩金剛忿怒菩薩。",
        "from": "T21n1303_001:0421a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛軍菩薩金剛播尼菩薩。",
        "from": "T21n1303_001:0421a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛主菩薩金剛莊嚴菩薩。",
        "from": "T21n1303_001:0421a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛明菩薩金剛敷菩薩。",
        "from": "T21n1303_001:0421a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩普觀世菩薩。",
        "from": "T21n1303_001:0421b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉祥菩薩蓮華幢菩薩。",
        "from": "T21n1303_001:0421b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華藏菩薩蓮華目菩薩。",
        "from": "T21n1303_001:0421b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩文殊師利法王子菩薩摩訶薩。",
        "from": "T21n1303_001:0421b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等諸大菩薩恭敬圍遶。",
        "from": "T21n1303_001:0421b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為說法初善中善後善。",
        "from": "T21n1303_001:0421b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其義深遠其語巧妙。",
        "from": "T21n1303_001:0421b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純一無雜具足清白莊嚴如意。",
        "from": "T21n1303_001:0421b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T21n1303_001:0421b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起以神通力。",
        "from": "T21n1303_001:0421b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞世尊無數百千匝。",
        "from": "T21n1303_001:0421b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭面作禮結跏趺坐。",
        "from": "T21n1303_001:0421b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨眼觀彼大眾。",
        "from": "T21n1303_001:0421b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作金剛合掌安向心間。",
        "from": "T21n1303_001:0421b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白世尊言。",
        "from": "T21n1303_001:0421b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸宿曜形貌麁惡。",
        "from": "T21n1303_001:0421b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心多忿怒惱害眾生。",
        "from": "T21n1303_001:0421b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或斷命根或耗人財寶。",
        "from": "T21n1303_001:0421b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或減人精神或促人年壽。",
        "from": "T21n1303_001:0421b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是損惱一切眾生。",
        "from": "T21n1303_001:0421b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊說正密法為作擁護。",
        "from": "T21n1303_001:0421b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉善哉。",
        "from": "T21n1303_001:0421b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能慈愍利益一切眾生。",
        "from": "T21n1303_001:0421b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問於如來最上祕密之法。",
        "from": "T21n1303_001:0421b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽善思念之。",
        "from": "T21n1303_001:0421b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為汝說金剛手。",
        "from": "T21n1303_001:0421b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸惡宿曜。",
        "from": "T21n1303_001:0421b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天龍夜叉乾闥婆阿脩羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T21n1303_001:0421b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以最上閼伽。",
        "from": "T21n1303_001:0421b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及音樂等。",
        "from": "T21n1303_001:0421b18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法加持一一供養。",
        "from": "T21n1303_001:0421b18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼歡喜滅除諸惡。",
        "from": "T21n1303_001:0421b18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時釋迦牟尼佛。",
        "from": "T21n1303_001:0421b19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自心中出大光明。",
        "from": "T21n1303_001:0421b19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名慈悲光。",
        "from": "T21n1303_001:0421b20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入諸宿曜頂。",
        "from": "T21n1303_001:0421b20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那之間一切宿曜及日月等。",
        "from": "T21n1303_001:0421b20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起頭面禮足。",
        "from": "T21n1303_001:0421b21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地合掌恭敬白佛言。",
        "from": "T21n1303_001:0421b21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來應正等覺。",
        "from": "T21n1303_001:0421b22_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願賜攝受為說正法。",
        "from": "T21n1303_001:0421b22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等若聞擁護有情令無災害。",
        "from": "T21n1303_001:0421b23_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有禁縛刀劍毒蟲一切不害。",
        "from": "T21n1303_001:0421b24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我結地界而為守護。",
        "from": "T21n1303_001:0421b24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦如來。",
        "from": "T21n1303_001:0421b25_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說供養宿曜真言。",
        "from": "T21n1303_001:0421b25_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵銘(引)齲(引)攞迦(二合引)野娑嚩(二合引)賀(引)唵(引)尸(引)旦(引)舍尾(引)娑嚩(二合引)賀(引)唵(引)洛訖旦(二合引)誐俱麼(引)囉野娑嚩(二合引)賀(引)唵(引)冐(引)馱野冐(引)馱野娑嚩(二合引)賀(引)唵(引)步(引)誐(引)娑波(二合)那野娑嚩(二合引)賀(引)唵(引)阿穌囉薩多麼(引)野娑嚩(二合引)賀(引)唵(引)訖里(二合)瑟拏(二合)嚩囉拏(二合引)野娑嚩(二合引)賀(引)唵(引)阿沒里(二合)多鉢里(二合)夜野娑嚩(二合引)賀(引)唵(引)乳(引)底計(引)多吠(引)娑嚩(二合引)賀(引)爾時世尊說真言已。",
        "from": "T21n1303_001:0421b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩言。",
        "from": "T21n1303_001:0421c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是九曜真言。",
        "from": "T21n1303_001:0421c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念者皆得成就。",
        "from": "T21n1303_001:0421c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須依法以香水。",
        "from": "T21n1303_001:0421c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗曼拏羅闊十二指。",
        "from": "T21n1303_001:0421c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或金銀器或銅器瓦器等。",
        "from": "T21n1303_001:0421c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻閼伽供養星曜。",
        "from": "T21n1303_001:0421c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用前真言各念一百八遍。",
        "from": "T21n1303_001:0421c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求之事而悉成就。",
        "from": "T21n1303_001:0421c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手菩薩。",
        "from": "T21n1303_001:0421c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今復說陀羅尼名聖曜母。",
        "from": "T21n1303_001:0421c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大明力能為擁護。",
        "from": "T21n1303_001:0421c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿曜聞悉歡喜。",
        "from": "T21n1303_001:0421c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻苾芻尼優婆塞優婆夷。",
        "from": "T21n1303_001:0421c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此經典於曼拏羅獻閼伽供養。",
        "from": "T21n1303_001:0421c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此真言七遍。",
        "from": "T21n1303_001:0421c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得富貴長壽。",
        "from": "T21n1303_001:0421c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若日日持誦彼一切宿曜。",
        "from": "T21n1303_001:0421c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿有情一切意願。",
        "from": "T21n1303_001:0421c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿曜母陀羅尼曰。",
        "from": "T21n1303_001:0421c16_0",
        "context_with_next_sentence": true
    },
