[
    {
        "source_sentence": "居士傳八",
        "from": "X88n1646_008:0197b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊山居士傳",
        "from": "X88n1646_008:0197b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊山居士陸法和者。",
        "from": "X88n1646_008:0197b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知何許人也。",
        "from": "X88n1646_008:0197b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊梁間隱於江陵百里洲。",
        "from": "X88n1646_008:0197b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣食居處一與戒行沙門同。",
        "from": "X88n1646_008:0197b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆老自幼見之。",
        "from": "X88n1646_008:0197b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "容色常定。",
        "from": "X88n1646_008:0197b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人莫能測也。",
        "from": "X88n1646_008:0197b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既居荊州高要縣紫石山。",
        "from": "X88n1646_008:0197b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無故捨去。",
        "from": "X88n1646_008:0197b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄而有蠻亂矦景之降梁也。",
        "from": "X88n1646_008:0197b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士謂南郡朱元英曰。",
        "from": "X88n1646_008:0197b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧道助檀越擊之。",
        "from": "X88n1646_008:0197b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元英曰。",
        "from": "X88n1646_008:0197b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矦景為國立效。",
        "from": "X88n1646_008:0197b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊之何也。",
        "from": "X88n1646_008:0197b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不省。",
        "from": "X88n1646_008:0197b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及景圍臺城。",
        "from": "X88n1646_008:0197b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士時在青溪山。",
        "from": "X88n1646_008:0197b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元英往問曰景事云何。",
        "from": "X88n1646_008:0197b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_008:0197b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡人取果。",
        "from": "X88n1646_008:0197b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜待熟時。",
        "from": "X88n1646_008:0197b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不撩自落。",
        "from": "X88n1646_008:0197b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀越但待景熟時。",
        "from": "X88n1646_008:0197b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何勞問也。",
        "from": "X88n1646_008:0197b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固問之。",
        "from": "X88n1646_008:0197b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則曰。",
        "from": "X88n1646_008:0197b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦克亦不克。",
        "from": "X88n1646_008:0197b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景遣其將任約擊湘東王於江陵。",
        "from": "X88n1646_008:0197b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士乃詣湘東乞征。",
        "from": "X88n1646_008:0197b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約召諸蠻子弟八百人誓之江津。",
        "from": "X88n1646_008:0197b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且發湘東。",
        "from": "X88n1646_008:0197b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復遣胡僧祐領兵千餘益其軍。",
        "from": "X88n1646_008:0197b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士笑曰。",
        "from": "X88n1646_008:0197b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾兵馬甚盛。",
        "from": "X88n1646_008:0197b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何須此。",
        "from": "X88n1646_008:0197b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江陵多神祠。",
        "from": "X88n1646_008:0197b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人俗祈禱即騐。",
        "from": "X88n1646_008:0197b20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自居士軍出。",
        "from": "X88n1646_008:0197b20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈禱無騐者。",
        "from": "X88n1646_008:0197b21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人以為神皆從行也。",
        "from": "X88n1646_008:0197b21_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至赤沙湖與約相對。",
        "from": "X88n1646_008:0197b21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士乘輕舟不甲冑沿流而下。",
        "from": "X88n1646_008:0197b22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去約軍一里而還。",
        "from": "X88n1646_008:0197b22_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂將士曰。",
        "from": "X88n1646_008:0197b23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾觀彼龍軍睡不動。",
        "from": "X88n1646_008:0197b23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾軍之龍甚踴躍。",
        "from": "X88n1646_008:0197b23_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即攻之。",
        "from": "X88n1646_008:0197b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐縱火舫於前而風逆。",
        "from": "X88n1646_008:0197b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士執白羽扇麾風。",
        "from": "X88n1646_008:0197b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風即返。",
        "from": "X88n1646_008:0197c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約眾見梁兵步水上。",
        "from": "X88n1646_008:0197c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂大潰。",
        "from": "X88n1646_008:0197c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾皆投水死。",
        "from": "X88n1646_008:0197c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而約逃竄不知處。",
        "from": "X88n1646_008:0197c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_008:0197c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日日中當得。",
        "from": "X88n1646_008:0197c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期未得。",
        "from": "X88n1646_008:0197c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人問之。",
        "from": "X88n1646_008:0197c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_008:0197c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾前於此洲水涸時建一剎。",
        "from": "X88n1646_008:0197c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語檀越等。",
        "from": "X88n1646_008:0197c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此雖為剎實賊標。",
        "from": "X88n1646_008:0197c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今何不向標下求。",
        "from": "X88n1646_008:0197c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其言。",
        "from": "X88n1646_008:0197c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果於水中見約抱剎仰頭。",
        "from": "X88n1646_008:0197c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔出鼻遂擒之。",
        "from": "X88n1646_008:0197c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約見居士求死。",
        "from": "X88n1646_008:0197c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_008:0197c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀越與王有緣。",
        "from": "X88n1646_008:0197c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決無他慮。",
        "from": "X88n1646_008:0197c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王於後且當得檀越力也。",
        "from": "X88n1646_008:0197c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "湘東果釋之。",
        "from": "X88n1646_008:0197c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用為郡守。",
        "from": "X88n1646_008:0197c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及魏圍江陵。",
        "from": "X88n1646_008:0197c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約以兵赴救力戰。",
        "from": "X88n1646_008:0197c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如居士言。",
        "from": "X88n1646_008:0197c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士既平約。",
        "from": "X88n1646_008:0197c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會蜀賊將至。",
        "from": "X88n1646_008:0197c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請守巫峽待之。",
        "from": "X88n1646_008:0197c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃總諸軍而往。",
        "from": "X88n1646_008:0197c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親運石以填江。",
        "from": "X88n1646_008:0197c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三日水不流。",
        "from": "X88n1646_008:0197c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫以鐵鎖。",
        "from": "X88n1646_008:0197c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武陵王紀果遣蜀兵來渡。",
        "from": "X88n1646_008:0197c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "峽口勢蹙進退不可。",
        "from": "X88n1646_008:0197c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士與王琳一戰殄之。",
        "from": "X88n1646_008:0197c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士為人言若不出口。",
        "from": "X88n1646_008:0197c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及有所論則雄辨無敵。",
        "from": "X88n1646_008:0197c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生平多諸靈異。",
        "from": "X88n1646_008:0197c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞於襄陽城北大樹下畫地方二尺。",
        "from": "X88n1646_008:0197c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令弟子掘之。",
        "from": "X88n1646_008:0197c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一龜。",
        "from": "X88n1646_008:0197c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長尺半。",
        "from": "X88n1646_008:0197c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以杖叩之曰。",
        "from": "X88n1646_008:0197c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲出不能。",
        "from": "X88n1646_008:0197c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數百歲矣。",
        "from": "X88n1646_008:0197c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不逢我者豈見天日乎。",
        "from": "X88n1646_008:0197c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為授三歸。",
        "from": "X88n1646_008:0197c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初入疊山。",
        "from": "X88n1646_008:0197c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多惡疾人。",
        "from": "X88n1646_008:0197c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士為采藥療之。",
        "from": "X88n1646_008:0197c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率不過三服即差。",
        "from": "X88n1646_008:0197c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即求為弟子。",
        "from": "X88n1646_008:0197c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中毒蟲猛獸授以禁戒。",
        "from": "X88n1646_008:0197c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即不復噬螫。",
        "from": "X88n1646_008:0197c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所泊江湖。",
        "from": "X88n1646_008:0197c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每於岸側表云。",
        "from": "X88n1646_008:0197c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此處放生漁者即皆無所得。",
        "from": "X88n1646_008:0197c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得即大風雷。",
        "from": "X88n1646_008:0197c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放之乃定。",
        "from": "X88n1646_008:0197c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將兵時禁諸軍漁捕甚嚴。",
        "from": "X88n1646_008:0197c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有竊違者中夜即有猛獸來欲噬之。",
        "from": "X88n1646_008:0197c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或亡其船。",
        "from": "X88n1646_008:0197c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纜有小弟子戲截蛇頭。",
        "from": "X88n1646_008:0197c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而詣居士。",
        "from": "X88n1646_008:0197c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_008:0197c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何殺蛇。",
        "from": "X88n1646_008:0197c21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子愕。",
        "from": "X88n1646_008:0197c21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指曰是非汝所殺者乎。",
        "from": "X88n1646_008:0197c21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子乃見蛇頭齚袴襠。",
        "from": "X88n1646_008:0197c21_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "振之不落則恐。",
        "from": "X88n1646_008:0197c22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士使懺悔。",
        "from": "X88n1646_008:0197c22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為蛇作功德。",
        "from": "X88n1646_008:0197c22_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有人以牛試刀。",
        "from": "X88n1646_008:0197c23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷牛頭。",
        "from": "X88n1646_008:0197c23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而詣居士。",
        "from": "X88n1646_008:0197c23_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_008:0197c23_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一斷頭牛就卿徵命殊急。",
        "from": "X88n1646_008:0197c24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不為作功德一月內報至。",
        "from": "X88n1646_008:0197c24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人弗信。",
        "from": "X88n1646_008:0198a01_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少日果死。",
        "from": "X88n1646_008:0198a01_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁元帝即位。",
        "from": "X88n1646_008:0198a01_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以居士為都督郢州刺史封江業縣公。",
        "from": "X88n1646_008:0198a01_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而加司徒。",
        "from": "X88n1646_008:0198a02_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部曲數千人通呼為弟子。",
        "from": "X88n1646_008:0198a02_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯以道術為化。",
        "from": "X88n1646_008:0198a03_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以法獄。",
        "from": "X88n1646_008:0198a03_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其市法以空櫝鎖置道間。",
        "from": "X88n1646_008:0198a03_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上開一孔受錢。",
        "from": "X88n1646_008:0198a04_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賈人計貨輸稅。",
        "from": "X88n1646_008:0198a04_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自委諸櫝中。",
        "from": "X88n1646_008:0198a04_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及夕有司開櫝條。",
        "from": "X88n1646_008:0198a05_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其稅目輸之庫。",
        "from": "X88n1646_008:0198a05_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士在江夏大聚兵艦欲襲襄陽。",
        "from": "X88n1646_008:0198a05_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入武關。",
        "from": "X88n1646_008:0198a06_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元帝使止之。",
        "from": "X88n1646_008:0198a06_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_008:0198a06_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法和求佛之人。",
        "from": "X88n1646_008:0198a07_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚不希釋梵天王坐處。",
        "from": "X88n1646_008:0198a07_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈規王位。",
        "from": "X88n1646_008:0198a07_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但於空王佛所與主上有香火因緣。",
        "from": "X88n1646_008:0198a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見主上應有報至故相援耳。",
        "from": "X88n1646_008:0198a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今既被疑。",
        "from": "X88n1646_008:0198a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業定不可改也。",
        "from": "X88n1646_008:0198a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及魏舉兵。",
        "from": "X88n1646_008:0198a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士自郢入漢口將赴江陵。",
        "from": "X88n1646_008:0198a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元帝又使止之曰。",
        "from": "X88n1646_008:0198a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此間自能破賊。",
        "from": "X88n1646_008:0198a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但鎮郢州不須動也。",
        "from": "X88n1646_008:0198a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士乃還州。",
        "from": "X88n1646_008:0198a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堊其城門著麤白布衫。",
        "from": "X88n1646_008:0198a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有袴邪巾。",
        "from": "X88n1646_008:0198a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大繩束腰。",
        "from": "X88n1646_008:0198a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐葦席終日乃脫之。",
        "from": "X88n1646_008:0198a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及聞元帝敗滅。",
        "from": "X88n1646_008:0198a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹著前凶服哭泣受弔。",
        "from": "X88n1646_008:0198a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊文宣使清河王岳將兵攻魏救梁。",
        "from": "X88n1646_008:0198a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會江陵陷。",
        "from": "X88n1646_008:0198a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士乃舉州入齊。",
        "from": "X88n1646_008:0198a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文宣以為大都督十州諸軍事太尉公。",
        "from": "X88n1646_008:0198a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士入朝不稱臣。",
        "from": "X88n1646_008:0198a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但云荊山居士。",
        "from": "X88n1646_008:0198a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文宣親宴之。",
        "from": "X88n1646_008:0198a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜錢百萬。",
        "from": "X88n1646_008:0198a16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物千段。",
        "from": "X88n1646_008:0198a16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲第一區田一百頃。",
        "from": "X88n1646_008:0198a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奴婢二百人。",
        "from": "X88n1646_008:0198a17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生資什物稱是居士所得奴婢盡免之曰。",
        "from": "X88n1646_008:0198a17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各隨緣去。",
        "from": "X88n1646_008:0198a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錢帛散施一日便盡。",
        "from": "X88n1646_008:0198a18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以官所賜宅營佛寺。",
        "from": "X88n1646_008:0198a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自居一房。",
        "from": "X88n1646_008:0198a19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三年間再為太尉。",
        "from": "X88n1646_008:0198a19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無疾預告弟子死期。",
        "from": "X88n1646_008:0198a20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至時燒香禮佛坐繩牀而終。",
        "from": "X88n1646_008:0198a20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴訖將斂。",
        "from": "X88n1646_008:0198a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尸小縮至三尺許。",
        "from": "X88n1646_008:0198a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既文宣令開棺視之。",
        "from": "X88n1646_008:0198a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空棺而已。",
        "from": "X88n1646_008:0198a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士有讖語預道齊事。",
        "from": "X88n1646_008:0198a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後一一皆驗(北史)。",
        "from": "X88n1646_008:0198a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_008:0198a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳人汪生言。",
        "from": "X88n1646_008:0198a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士在佛門得吟風弄月。",
        "from": "X88n1646_008:0198a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾與點也之趣。",
        "from": "X88n1646_008:0198a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑞金羅生以汪生之言為然。",
        "from": "X88n1646_008:0198a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或乃以靈異震居士也。",
        "from": "X88n1646_008:0198a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲夫。",
        "from": "X88n1646_008:0198b01_6",
        "context_with_next_sentence": false
    }
]