[
    {
        "source_sentence": "會刻仁王護國般若經疏序",
        "from": "X26n0514_001:0189a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王護國般若經者。",
        "from": "X26n0514_001:0189a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃八部般若之結經也。",
        "from": "X26n0514_001:0189a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫般若之談。",
        "from": "X26n0514_001:0189a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時長理詣。",
        "from": "X26n0514_001:0189a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不蕩空釋滯。",
        "from": "X26n0514_001:0189a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕想袪情。",
        "from": "X26n0514_001:0189a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良由眾生迷執久固。",
        "from": "X26n0514_001:0189a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真性難顯。",
        "from": "X26n0514_001:0189a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故佛且不揀善惡垢淨性相。",
        "from": "X26n0514_001:0189a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切訶破。",
        "from": "X26n0514_001:0189a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖真性及妙用不無。",
        "from": "X26n0514_001:0189a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而姑云無。",
        "from": "X26n0514_001:0189a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直待情忘理喪。",
        "from": "X26n0514_001:0189a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纖毫不容。",
        "from": "X26n0514_001:0189a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後引出匿王之問端。",
        "from": "X26n0514_001:0189a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高張五忍之法網。",
        "from": "X26n0514_001:0189a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆心徹底。",
        "from": "X26n0514_001:0189a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巧運錐鎚。",
        "from": "X26n0514_001:0189a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密接通別之初機。",
        "from": "X26n0514_001:0189a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淘鎔凡聖之玄路。",
        "from": "X26n0514_001:0189a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來至法華開顯。",
        "from": "X26n0514_001:0189a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領付家業。",
        "from": "X26n0514_001:0189a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點示般若之離相。",
        "from": "X26n0514_001:0189a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸成諸法之實相。",
        "from": "X26n0514_001:0189a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究論實相之功。",
        "from": "X26n0514_001:0189a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功由般若。",
        "from": "X26n0514_001:0189a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若之要。",
        "from": "X26n0514_001:0189a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要當妙悟。",
        "from": "X26n0514_001:0189a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰無量義者。",
        "from": "X26n0514_001:0189a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一法生。",
        "from": "X26n0514_001:0189a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是也。",
        "from": "X26n0514_001:0189a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯我天台智者大師。",
        "from": "X26n0514_001:0189a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深愍當來。",
        "from": "X26n0514_001:0189a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫運漸衰。",
        "from": "X26n0514_001:0189a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬪諍堅固。",
        "from": "X26n0514_001:0189a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若緣疎。",
        "from": "X26n0514_001:0189a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云若國欲亂。",
        "from": "X26n0514_001:0189a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼神先亂。",
        "from": "X26n0514_001:0189a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼神亂故。",
        "from": "X26n0514_001:0189a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即萬人亂。",
        "from": "X26n0514_001:0189a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸難起。",
        "from": "X26n0514_001:0189a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆應受持講讀此般若波羅蜜多。",
        "from": "X26n0514_001:0189a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而護國法要。",
        "from": "X26n0514_001:0189a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尤在解說此經。",
        "from": "X26n0514_001:0189a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大師經疏所由作焉。",
        "from": "X26n0514_001:0189a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜乎此疏。",
        "from": "X26n0514_001:0189a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛行海東。",
        "from": "X26n0514_001:0189a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中華失傳。",
        "from": "X26n0514_001:0189a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔四明尊者。",
        "from": "X26n0514_001:0189a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搆仁王疏而弗獲。",
        "from": "X26n0514_001:0189a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶天台大師拜楞嚴經而未得。",
        "from": "X26n0514_001:0189a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先後求法。",
        "from": "X26n0514_001:0189a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦心有同揆歟。",
        "from": "X26n0514_001:0189a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸有宋老僧如恂師。",
        "from": "X26n0514_001:0189a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得之海賈。",
        "from": "X26n0514_001:0189a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晁說之敘於簡端今龍藏雖載。",
        "from": "X26n0514_001:0189a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而講筵無聞。",
        "from": "X26n0514_001:0189a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適天台敏老法師。",
        "from": "X26n0514_001:0189a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應吳門諸縉紳請。",
        "from": "X26n0514_001:0189a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於戊戌冬。",
        "from": "X26n0514_001:0189a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住報恩北寺。",
        "from": "X26n0514_001:0189a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時值邊疆多故。",
        "from": "X26n0514_001:0189a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣民不安。",
        "from": "X26n0514_001:0189a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃於己亥春。",
        "from": "X26n0514_001:0189a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬成蓮演講仁王護國般若經。",
        "from": "X26n0514_001:0189a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求佛保安。",
        "from": "X26n0514_001:0189a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟成蓮所講。",
        "from": "X26n0514_001:0189a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "係當世通行唐不空譯本。",
        "from": "X26n0514_001:0189a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而大師所疏。",
        "from": "X26n0514_001:0189b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為什公譯本。",
        "from": "X26n0514_001:0189b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經文互有異同。",
        "from": "X26n0514_001:0189b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大旨正堪補備。",
        "from": "X26n0514_001:0189b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且龍藏本。",
        "from": "X26n0514_001:0189b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經與疏各自為帙。",
        "from": "X26n0514_001:0189b02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "研究維艱。",
        "from": "X26n0514_001:0189b02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰遵天台大部之軌。",
        "from": "X26n0514_001:0189b02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴三合之例。",
        "from": "X26n0514_001:0189b03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分經會疏。",
        "from": "X26n0514_001:0189b03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合鐫方冊。",
        "from": "X26n0514_001:0189b03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "排科文於經前。",
        "from": "X26n0514_001:0189b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫疏解於經後。",
        "from": "X26n0514_001:0189b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重加句讀。",
        "from": "X26n0514_001:0189b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶幾條分縷析。",
        "from": "X26n0514_001:0189b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開卷瞭然。",
        "from": "X26n0514_001:0189b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成蓮復據北藏。",
        "from": "X26n0514_001:0189b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "校勘一周。",
        "from": "X26n0514_001:0189b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬。",
        "from": "X26n0514_001:0189b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　而說頌曰。",
        "from": "X26n0514_001:0189b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　般若如虗空　　功德不可量　　付囑諸國王　依教而信受　　菩薩金剛手　　承佛威神力　一聞說是經　　頃刻為護持　　能令其國界　無復諸災難　　疾疫與刀兵　　一切悉消除　法施利羣生　　同發菩提心時在光緒二十六年荷月普門示現日　台宗後學比丘成蓮敘於吳門報恩北寺之西齋",
        "from": "X26n0514_001:0189b07_0",
        "context_with_next_sentence": false
    }
]