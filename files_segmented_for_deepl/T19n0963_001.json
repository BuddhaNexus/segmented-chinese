[
    {
        "source_sentence": "佛說熾盛光大威德消災吉祥陀",
        "from": "T19n0963_001:0337b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅尼經序",
        "from": "T19n0963_001:0337b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越溪沙門性澄述",
        "from": "T19n0963_001:0337b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫能仁之為教也。",
        "from": "T19n0963_001:0337b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所契者道。",
        "from": "T19n0963_001:0337b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所體者神。",
        "from": "T19n0963_001:0337b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統法界而有為。",
        "from": "T19n0963_001:0337b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮三世而不息。",
        "from": "T19n0963_001:0337b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無乎不在。",
        "from": "T19n0963_001:0337b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故天為覆。",
        "from": "T19n0963_001:0337b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地為載。",
        "from": "T19n0963_001:0337b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月星辰為照臨。",
        "from": "T19n0963_001:0337b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群生品物為吉凶消長。",
        "from": "T19n0963_001:0337b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感而遂通。",
        "from": "T19n0963_001:0337b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故凶可以避。",
        "from": "T19n0963_001:0337b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉可以趨。",
        "from": "T19n0963_001:0337b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天地日月星辰萬物。",
        "from": "T19n0963_001:0337b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各可以使其至於當者。",
        "from": "T19n0963_001:0337b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆斯經之宗用也。",
        "from": "T19n0963_001:0337b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其消禳災難。",
        "from": "T19n0963_001:0337b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導致禎祥。",
        "from": "T19n0963_001:0337b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方軌壇儀。",
        "from": "T19n0963_001:0337b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要制期限。",
        "from": "T19n0963_001:0337b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粲然靡所不載。",
        "from": "T19n0963_001:0337b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足以上福邦家。",
        "from": "T19n0963_001:0337b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下祐民庶。",
        "from": "T19n0963_001:0337b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即近而達遠。",
        "from": "T19n0963_001:0337b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即事而顯真。",
        "from": "T19n0963_001:0337b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠博要之道歟。",
        "from": "T19n0963_001:0337b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰自不空傳譯。",
        "from": "T19n0963_001:0337c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷代寶之。",
        "from": "T19n0963_001:0337c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法誦持。",
        "from": "T19n0963_001:0337c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾機蒙益。",
        "from": "T19n0963_001:0337c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可無訓釋以裨流通。",
        "from": "T19n0963_001:0337c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維昔雲間鑑師。",
        "from": "T19n0963_001:0337c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖嘗疏解繁略未馴輒不自揆。",
        "from": "T19n0963_001:0337c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採摭山家諸祖格言。",
        "from": "T19n0963_001:0337c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刪補治定。",
        "from": "T19n0963_001:0337c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶或少補于將來。",
        "from": "T19n0963_001:0337c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時至治二年。",
        "from": "T19n0963_001:0337c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍集壬戌。",
        "from": "T19n0963_001:0337c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉詔赴都。",
        "from": "T19n0963_001:0337c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘驛淮河。",
        "from": "T19n0963_001:0337c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中秋日敘。",
        "from": "T19n0963_001:0337c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說熾盛光大威德消災吉祥陀",
        "from": "T19n0963_001:0337c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅尼經",
        "from": "T19n0963_001:0337c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐特進試鴻臚卿三藏沙門",
        "from": "T19n0963_001:0337c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智不空奉　詔譯",
        "from": "T19n0963_001:0337c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼佛在淨居天宮。",
        "from": "T19n0963_001:0337c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告諸宿曜遊空天眾九執大天。",
        "from": "T19n0963_001:0337c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及二十八宿十二宮神一切聖眾。",
        "from": "T19n0963_001:0337c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說過去娑羅王如來所說。",
        "from": "T19n0963_001:0337c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熾盛光大威德陀羅尼除災難法。",
        "from": "T19n0963_001:0337c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有國王及諸大臣所居之處及諸國界。",
        "from": "T19n0963_001:0337c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或被五星陵逼。",
        "from": "T19n0963_001:0337c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅睺彗孛妖星。",
        "from": "T19n0963_001:0337c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照臨所屬本命宮宿及諸星位。",
        "from": "T19n0963_001:0337c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或臨帝座於國於家及分野處。",
        "from": "T19n0963_001:0337c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陵逼之時。",
        "from": "T19n0963_001:0337c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或退或進作諸障難者。",
        "from": "T19n0963_001:0337c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但於清淨處置立道場。",
        "from": "T19n0963_001:0337c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此陀羅尼一百八遍或一千遍。",
        "from": "T19n0963_001:0337c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一日二日三日乃至七日。",
        "from": "T19n0963_001:0337c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法修飾壇場。",
        "from": "T19n0963_001:0337c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心受持讀誦。",
        "from": "T19n0963_001:0337c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災難皆悉消滅不能為害。",
        "from": "T19n0963_001:0337c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若太白火星入於南斗。",
        "from": "T19n0963_001:0337c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於國於家及分野處作諸障難者。",
        "from": "T19n0963_001:0337c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一忿怒像前。",
        "from": "T19n0963_001:0337c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫彼設都嚕形。",
        "from": "T19n0963_001:0337c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厲聲念此陀羅尼加持。",
        "from": "T19n0963_001:0337c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其災即除移於不順王命悖逆人身上。",
        "from": "T19n0963_001:0337c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受者即說陀羅尼曰。",
        "from": "T19n0963_001:0337c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿跢(一)沒馱喃(上聲二)阿鉢囉(二合)底(丁逸切三)賀哆舍(四)娑(上聲)娜喃(上聲五)怛姪他(六)唵(引七)佉佉(八)佉呬(上聲)佉呬(九)吽吽(短呼十)入嚩(二合)囉(十一)入嚩囉(十二)鉢囉(二合)入嚩(二合)攞(十三)鉢囉入嚩攞(十四)底瑟姹(二合十五)底瑟姹(二合十六)瑟致(二合)哩(十七)瑟致(二合)哩(十八)薩普(二合)吒(十九)薩普(二合)吒(二十)扇底迦(二十一)室哩(二合)曳(二十二)娑嚩(二合)賀(二十三)此陀羅尼。",
        "from": "T19n0963_001:0337c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來同共宣說。",
        "from": "T19n0963_001:0338a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有苾芻苾芻尼族姓男族姓女。",
        "from": "T19n0963_001:0338a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦此陀羅尼者。",
        "from": "T19n0963_001:0338a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成就八萬種吉祥事。",
        "from": "T19n0963_001:0338a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除滅八萬種不吉祥事。",
        "from": "T19n0963_001:0338a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有國王大臣及諸眷屬一切庶民。",
        "from": "T19n0963_001:0338a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或被五星羅睺計都彗孛妖怪惡星。",
        "from": "T19n0963_001:0338a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陵逼帝座於國於家及分野處。",
        "from": "T19n0963_001:0338a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所屬宮宿。",
        "from": "T19n0963_001:0338a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災難競起。",
        "from": "T19n0963_001:0338a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或鎮星陵逼。",
        "from": "T19n0963_001:0338a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或進或退。",
        "from": "T19n0963_001:0338a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及宿世冤家欲相謀害。",
        "from": "T19n0963_001:0338a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡橫事口舌厭禱呪詛。",
        "from": "T19n0963_001:0338a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為災難者。",
        "from": "T19n0963_001:0338a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生依法受持。",
        "from": "T19n0963_001:0338a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災難悉皆消滅不能為害。",
        "from": "T19n0963_001:0338a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變災為福皆得吉祥。",
        "from": "T19n0963_001:0338a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說此陀羅尼不可思議功德無比。",
        "from": "T19n0963_001:0338a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密受持勿妄宣傳。",
        "from": "T19n0963_001:0338a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來告諸四眾。",
        "from": "T19n0963_001:0338a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有國界不安災難並起。",
        "from": "T19n0963_001:0338a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請清淨眾如法建立道場。",
        "from": "T19n0963_001:0338a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置佛像結界護持。",
        "from": "T19n0963_001:0338a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香華燈燭隨分供養。",
        "from": "T19n0963_001:0338a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸有情獲福無量。",
        "from": "T19n0963_001:0338a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其災即除。",
        "from": "T19n0963_001:0338a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來說是陀羅尼經已。",
        "from": "T19n0963_001:0338a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時曼殊室利菩薩摩訶薩。",
        "from": "T19n0963_001:0338a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸聲聞四眾遊空大天。",
        "from": "T19n0963_001:0338a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸星辰一切聖眾。",
        "from": "T19n0963_001:0338a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸依佛勅頂禮奉持各還本宮。",
        "from": "T19n0963_001:0338a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天龍八部一切大眾。",
        "from": "T19n0963_001:0338a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T19n0963_001:0338a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說熾盛光大威德消災吉祥陀羅尼經",
        "from": "T19n0963_001:0338a26_0",
        "context_with_next_sentence": false
    }
]