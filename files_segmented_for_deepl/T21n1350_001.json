[
    {
        "source_sentence": "佛說一切如來名號陀羅尼經",
        "from": "T21n1350_001:0864a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1350_001:0864a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1350_001:0864a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1350_001:0864a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在摩伽陀國法野大菩提道場。",
        "from": "T21n1350_001:0864a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初成正覺。",
        "from": "T21n1350_001:0864a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸菩薩摩訶薩眾八萬人俱。",
        "from": "T21n1350_001:0864a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有八萬四千大梵天子亦在道場。",
        "from": "T21n1350_001:0864a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆圍繞瞻仰世尊。",
        "from": "T21n1350_001:0864a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中有菩薩摩訶薩名觀自在。",
        "from": "T21n1350_001:0864a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起偏袒右肩。",
        "from": "T21n1350_001:0864a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地合掌向佛。",
        "from": "T21n1350_001:0864a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言世尊。",
        "from": "T21n1350_001:0864a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一切如來名號陀羅尼。",
        "from": "T21n1350_001:0864a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切如來名號陀羅尼。",
        "from": "T21n1350_001:0864a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是莊嚴劫賢劫星宿劫中。",
        "from": "T21n1350_001:0864a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來已說當說。",
        "from": "T21n1350_001:0864a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今承佛威力。",
        "from": "T21n1350_001:0864a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為利益安樂諸眾生故樂欲宣說。",
        "from": "T21n1350_001:0864a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊加哀覆護。",
        "from": "T21n1350_001:0864a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊讚觀自在菩薩摩訶薩言。",
        "from": "T21n1350_001:0864a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉觀自在。",
        "from": "T21n1350_001:0864a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能為利益一切眾生發大悲心。",
        "from": "T21n1350_001:0864a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意宣說。",
        "from": "T21n1350_001:0864a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀自在菩薩蒙佛許已。",
        "from": "T21n1350_001:0864a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言世尊。",
        "from": "T21n1350_001:0864a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲誦彼陀羅尼。",
        "from": "T21n1350_001:0864a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當至誠誦諸佛如來名號。",
        "from": "T21n1350_001:0864a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂寶師子自在如來寶雲如來。",
        "from": "T21n1350_001:0864a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶莊嚴藏如來師子大雲如來。",
        "from": "T21n1350_001:0864a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲師子如來須彌如來。",
        "from": "T21n1350_001:0864a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼如來師子利如來。",
        "from": "T21n1350_001:0864a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵音如來善愛如來。",
        "from": "T21n1350_001:0864a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華上如來燃燈如來。",
        "from": "T21n1350_001:0864a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華生如來遜那囉如來。",
        "from": "T21n1350_001:0864a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持花如來持寶如來。",
        "from": "T21n1350_001:0864a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法生如來日光如來。",
        "from": "T21n1350_001:0864a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日照如來月光如來。",
        "from": "T21n1350_001:0864a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量藏如來無量莊嚴藏如來。",
        "from": "T21n1350_001:0864a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量光如來蓮華藏如來。",
        "from": "T21n1350_001:0864a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天妙音如來拘枳羅音如來。",
        "from": "T21n1350_001:0864a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等諸佛如來名號。",
        "from": "T21n1350_001:0864a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人得聞為他宣說。",
        "from": "T21n1350_001:0864b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人六十千劫不聞惡趣之名。",
        "from": "T21n1350_001:0864b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況墮於阿鼻地獄。",
        "from": "T21n1350_001:0864b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀自在菩薩。",
        "from": "T21n1350_001:0864b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是諸佛如來名號已。",
        "from": "T21n1350_001:0864b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1350_001:0864b03_2",
        "context_with_next_sentence": true
    },
    {
