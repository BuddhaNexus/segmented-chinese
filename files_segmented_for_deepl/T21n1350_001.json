        "from": "T21n1350_001:0864b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼已。",
        "from": "T21n1350_001:0864b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言世尊。",
        "from": "T21n1350_001:0864b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一切如來名號陀羅尼。",
        "from": "T21n1350_001:0864b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1350_001:0864b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦思惟記念。",
        "from": "T21n1350_001:0864b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他人說。",
        "from": "T21n1350_001:0864b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所有五無間業悉得消除。",
        "from": "T21n1350_001:0864b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生天為王。",
        "from": "T21n1350_001:0864b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽八十四百千俱胝劫數。",
        "from": "T21n1350_001:0864b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後得轉輪王位壽六十中劫。",
        "from": "T21n1350_001:0864b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過是劫已當得成佛。",
        "from": "T21n1350_001:0864b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰蓮華藏如來應供正等正覺。",
        "from": "T21n1350_001:0864b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T21n1350_001:0864c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬菩薩摩訶薩眾。",
        "from": "T21n1350_001:0864c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及八萬四千大梵天子。",
        "from": "T21n1350_001:0864c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T21n1350_001:0864c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說一切如來名號陀羅尼經",
        "from": "T21n1350_001:0864c05_0",
        "context_with_next_sentence": false
    }
]