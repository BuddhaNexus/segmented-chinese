[
    {
        "source_sentence": "般若心經論",
        "from": "X26n0565_001:0915c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丹霞沙門　釋天然圅昰　撰",
        "from": "X26n0565_001:0915c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵語般若。",
        "from": "X26n0565_001:0915c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云智慧。",
        "from": "X26n0565_001:0915c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以智慧解諸法空。",
        "from": "X26n0565_001:0915c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而至于彼岸。",
        "from": "X26n0565_001:0915c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是矣。",
        "from": "X26n0565_001:0915c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X26n0565_001:0915c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心經何謂也。",
        "from": "X26n0565_001:0915c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華首曰。",
        "from": "X26n0565_001:0915c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心是體。",
        "from": "X26n0565_001:0915c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智是用。",
        "from": "X26n0565_001:0915c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體則通凡聖。",
        "from": "X26n0565_001:0915c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而皆徧用。",
        "from": "X26n0565_001:0915c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則分迷悟以各成。",
        "from": "X26n0565_001:0915c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下無無用之體。",
        "from": "X26n0565_001:0915c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體即徧。",
        "from": "X26n0565_001:0915c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而用安得不徧歟。",
        "from": "X26n0565_001:0915c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰徧而迷悟異致。",
        "from": "X26n0565_001:0915c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰各成。",
        "from": "X26n0565_001:0915c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各成則不可均言智慧矣。",
        "from": "X26n0565_001:0915c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所謂本覺則聖凡無二。",
        "from": "X26n0565_001:0915c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷本為妄。",
        "from": "X26n0565_001:0915c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟本為始。",
        "from": "X26n0565_001:0915c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄與始無二體。",
        "from": "X26n0565_001:0915c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有二用也。",
        "from": "X26n0565_001:0915c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當其迷也。",
        "from": "X26n0565_001:0915c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見色而不見空。",
        "from": "X26n0565_001:0915c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迺至見受想行識。",
        "from": "X26n0565_001:0915c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不見空。",
        "from": "X26n0565_001:0915c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行于日用。",
        "from": "X26n0565_001:0915c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求其毫釐解脫。",
        "from": "X26n0565_001:0915c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不可得矣。",
        "from": "X26n0565_001:0915c13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及其悟也。",
        "from": "X26n0565_001:0915c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即色是空。",
        "from": "X26n0565_001:0915c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無別空。",
        "from": "X26n0565_001:0915c14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即空是色。",
        "from": "X26n0565_001:0915c14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無別色。",
        "from": "X26n0565_001:0915c14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迺至即受想行識是空。",
        "from": "X26n0565_001:0915c14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無別空。",
        "from": "X26n0565_001:0915c15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即空是受想行識。",
        "from": "X26n0565_001:0915c15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無別受想行識。",
        "from": "X26n0565_001:0915c15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行於日用。",
        "from": "X26n0565_001:0915c16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求其毫釐凝滯。",
        "from": "X26n0565_001:0915c16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而亦不可得矣。",
        "from": "X26n0565_001:0915c16_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是迷悟之用各異。",
        "from": "X26n0565_001:0915c17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而皆原于本覺之心。",
        "from": "X26n0565_001:0915c17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固無有異也。",
        "from": "X26n0565_001:0915c17_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通凡聖而無有異。",
        "from": "X26n0565_001:0915c18_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰體也。",
        "from": "X26n0565_001:0915c18_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無始來。",
        "from": "X26n0565_001:0915c18_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無佛名。",
        "from": "X26n0565_001:0915c18_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無菩薩名。",
        "from": "X26n0565_001:0915c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無二乘凡夫名。",
        "from": "X26n0565_001:0915c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯渾然藏識而已。",
        "from": "X26n0565_001:0915c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏無自性。",
        "from": "X26n0565_001:0915c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺成識。",
        "from": "X26n0565_001:0915c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識成而根身器界名相臚。",
        "from": "X26n0565_001:0915c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而藏性不失。",
        "from": "X26n0565_001:0915c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識滅而三明六通。",
        "from": "X26n0565_001:0915c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智證詣極。",
        "from": "X26n0565_001:0915c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而藏性不加。",
        "from": "X26n0565_001:0915c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂無生滅之謂心。",
        "from": "X26n0565_001:0915c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無垢淨之謂心。",
        "from": "X26n0565_001:0915c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無增減之謂心。",
        "from": "X26n0565_001:0915c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心空相本自如。",
        "from": "X26n0565_001:0915c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而非深于般若。",
        "from": "X26n0565_001:0915c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則未有能徹見。",
        "from": "X26n0565_001:0915c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而返本歸源者。",
        "from": "X26n0565_001:0915c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三世如來所讚歎尊重。",
        "from": "X26n0565_001:0915c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無異旨也。",
        "from": "X26n0565_001:0915c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若生于本覺。",
        "from": "X26n0565_001:0915c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而要迷情淨盡。",
        "from": "X26n0565_001:0916a01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後現妄覺。",
        "from": "X26n0565_001:0916a01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦生于本覺。",
        "from": "X26n0565_001:0916a01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而要當體知歸。",
        "from": "X26n0565_001:0916a01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後泯故知翻其妄。",
        "from": "X26n0565_001:0916a02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而自照之為智。",
        "from": "X26n0565_001:0916a02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智生即無妄。",
        "from": "X26n0565_001:0916a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄成智也。",
        "from": "X26n0565_001:0916a03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智解諸法空。",
        "from": "X26n0565_001:0916a03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還其本覺之無。",
        "from": "X26n0565_001:0916a03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動搖之為心。",
        "from": "X26n0565_001:0916a03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心返則無智。",
        "from": "X26n0565_001:0916a04_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智盡心也。",
        "from": "X26n0565_001:0916a04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃三德。",
        "from": "X26n0565_001:0916a04_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非縱非橫。",
        "from": "X26n0565_001:0916a04_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而悉始于明。",
        "from": "X26n0565_001:0916a05_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見佛性融。",
        "from": "X26n0565_001:0916a05_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根本差別。",
        "from": "X26n0565_001:0916a05_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而一至于是。",
        "from": "X26n0565_001:0916a05_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂佛性為因。",
        "from": "X26n0565_001:0916a05_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而涅槃為果也。",
        "from": "X26n0565_001:0916a06_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是而造焉。",
        "from": "X26n0565_001:0916a06_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之謂經也。",
        "from": "X26n0565_001:0916a06_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若心經論(終)",
        "from": "X26n0565_001:0916a08_0",
        "context_with_next_sentence": false
    }
]