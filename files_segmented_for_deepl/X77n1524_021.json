[
    {
        "source_sentence": "補續高僧傳卷第二十一",
        "from": "X77n1524_021:0509b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明吳門華山寺沙門　明河　撰",
        "from": "X77n1524_021:0509b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦篇",
        "from": "X77n1524_021:0509b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋　洪準．遇安二師傳",
        "from": "X77n1524_021:0509b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪準禪師。",
        "from": "X77n1524_021:0509b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "桂林人。",
        "from": "X77n1524_021:0509b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從南禪師遊有年。",
        "from": "X77n1524_021:0509b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天資純至。",
        "from": "X77n1524_021:0509b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞忤物。",
        "from": "X77n1524_021:0509b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞人之善。",
        "from": "X77n1524_021:0509b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如出諸己。",
        "from": "X77n1524_021:0509b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜氣津津。",
        "from": "X77n1524_021:0509b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生眉宇間。",
        "from": "X77n1524_021:0509b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞人之惡。",
        "from": "X77n1524_021:0509b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必合掌扣空。",
        "from": "X77n1524_021:0509b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若追悔者。",
        "from": "X77n1524_021:0509b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者莫不笑之。",
        "from": "X77n1524_021:0509b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而其真誠如此。",
        "from": "X77n1524_021:0509b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終始一如。",
        "from": "X77n1524_021:0509b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暮年不領院事。",
        "from": "X77n1524_021:0509b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寓跡於寒溪寺。",
        "from": "X77n1524_021:0509b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽已逾八十矣。",
        "from": "X77n1524_021:0509b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平生日夕無他營。",
        "from": "X77n1524_021:0509b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眠食之餘。",
        "from": "X77n1524_021:0509b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟吟梵音。",
        "from": "X77n1524_021:0509b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚觀世音而已。",
        "from": "X77n1524_021:0509b22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨終時。",
        "from": "X77n1524_021:0509b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門人弟子皆赴檀越。",
        "from": "X77n1524_021:0509b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟一僕夫在。",
        "from": "X77n1524_021:0509b22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師携磬坐土地祠前。",
        "from": "X77n1524_021:0509b23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦孔雀經一遍告別。",
        "from": "X77n1524_021:0509b23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即安坐瞑目。",
        "from": "X77n1524_021:0509b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三日不傾。",
        "from": "X77n1524_021:0509b24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄉民來觀者堵立。",
        "from": "X77n1524_021:0509b24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師忽開目而笑。",
        "from": "X77n1524_021:0509b24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使坐於地。",
        "from": "X77n1524_021:0509c01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有頃門弟子還。",
        "from": "X77n1524_021:0509c01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師呼立其右。",
        "from": "X77n1524_021:0509c01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "握手如炊熟久。",
        "from": "X77n1524_021:0509c01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂然視之去矣。",
        "from": "X77n1524_021:0509c02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神色不變。",
        "from": "X77n1524_021:0509c02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頰紅如生。",
        "from": "X77n1524_021:0509c02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道路塑其像龕之。",
        "from": "X77n1524_021:0509c02_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前是。",
        "from": "X77n1524_021:0509c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有破句讀楞嚴得悟。",
        "from": "X77n1524_021:0509c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰遇安者。",
        "from": "X77n1524_021:0509c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福州人。",
        "from": "X77n1524_021:0509c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居瑞鹿上方。",
        "from": "X77n1524_021:0509c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道德著聞。",
        "from": "X77n1524_021:0509c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗為一方宗仰。",
        "from": "X77n1524_021:0509c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其死生之際。",
        "from": "X77n1524_021:0509c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫然自在。",
        "from": "X77n1524_021:0509c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與師若出一手。",
        "from": "X77n1524_021:0509c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日將示滅。",
        "from": "X77n1524_021:0509c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喚弟子蘊仁侍立。",
        "from": "X77n1524_021:0509c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "停棺於側。",
        "from": "X77n1524_021:0509c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說偈曰。",
        "from": "X77n1524_021:0509c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是嶺頭携得去。",
        "from": "X77n1524_021:0509c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈從雞足付將來。",
        "from": "X77n1524_021:0509c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐自入棺。",
        "from": "X77n1524_021:0509c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安詳整頓。",
        "from": "X77n1524_021:0509c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命蘊仁闔釘。",
        "from": "X77n1524_021:0509c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經三日。",
        "from": "X77n1524_021:0509c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門人起棺。",
        "from": "X77n1524_021:0509c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見師右脇而臥。",
        "from": "X77n1524_021:0509c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾哀慟。",
        "from": "X77n1524_021:0509c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師遂起。",
        "from": "X77n1524_021:0509c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如夢醒狀。",
        "from": "X77n1524_021:0509c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命撾鼓。",
        "from": "X77n1524_021:0509c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇堂說法。",
        "from": "X77n1524_021:0509c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訶責垂戒曰。",
        "from": "X77n1524_021:0509c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此度更起吾棺。",
        "from": "X77n1524_021:0509c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非吾徒也。",
        "from": "X77n1524_021:0509c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖復入棺而化。",
        "from": "X77n1524_021:0509c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道光傳",
        "from": "X77n1524_021:0509c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道光者。",
        "from": "X77n1524_021:0509c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘄州永樂寺書經僧也。",
        "from": "X77n1524_021:0509c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數椽山中。",
        "from": "X77n1524_021:0509c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與其兄道舒鄰房。",
        "from": "X77n1524_021:0509c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨香夕燈。",
        "from": "X77n1524_021:0509c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以禪誦為佛事。",
        "from": "X77n1524_021:0509c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出血和墨。",
        "from": "X77n1524_021:0509c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫一切經。",
        "from": "X77n1524_021:0509c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其衡斜點畫。",
        "from": "X77n1524_021:0509c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勻如空中之雨。",
        "from": "X77n1524_021:0509c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "整如上瀨之魚。",
        "from": "X77n1524_021:0509c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆精進力之所成。",
        "from": "X77n1524_021:0509c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且為人純素。",
        "from": "X77n1524_021:0509c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忠於事。",
        "from": "X77n1524_021:0509c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝於奉親。",
        "from": "X77n1524_021:0509c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為里閈所敬信。",
        "from": "X77n1524_021:0509c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法眷所追崇。",
        "from": "X77n1524_021:0509c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從之者。",
        "from": "X77n1524_021:0509c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆肅如也。",
        "from": "X77n1524_021:0509c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂音尊者。",
        "from": "X77n1524_021:0509c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞過其菴。",
        "from": "X77n1524_021:0509c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信宿彌日。",
        "from": "X77n1524_021:0509c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡獲見其所寫之經。",
        "from": "X77n1524_021:0509c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無慮十數種。",
        "from": "X77n1524_021:0509c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為之頂戴歡喜。",
        "from": "X77n1524_021:0509c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱其為真比丘。",
        "from": "X77n1524_021:0509c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說以贈之。",
        "from": "X77n1524_021:0509c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有云觀其施為。",
        "from": "X77n1524_021:0509c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日夕以與佛菩薩。",
        "from": "X77n1524_021:0509c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語言酧酢。",
        "from": "X77n1524_021:0509c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈復有世間心耶。",
        "from": "X77n1524_021:0509c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴曰。",
        "from": "X77n1524_021:0509c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不與世間心合。",
        "from": "X77n1524_021:0509c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大精進。",
        "from": "X77n1524_021:0509c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光其以之。",
        "from": "X77n1524_021:0509c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元　如一菴傳",
        "from": "X77n1524_021:0509c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一菴如公。",
        "from": "X77n1524_021:0509c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉人。",
        "from": "X77n1524_021:0509c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生玄氏。",
        "from": "X77n1524_021:0509c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先誕五日。",
        "from": "X77n1524_021:0509c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其父夢一異僧持梵筴至。",
        "from": "X77n1524_021:0509c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問何來。",
        "from": "X77n1524_021:0510a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰五雲。",
        "from": "X77n1524_021:0510a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問何姓。",
        "from": "X77n1524_021:0510a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰姓殷。",
        "from": "X77n1524_021:0510a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名。",
        "from": "X77n1524_021:0510a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦曰姓殷。",
        "from": "X77n1524_021:0510a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且云。",
        "from": "X77n1524_021:0510a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後五日當復來。",
        "from": "X77n1524_021:0510a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視所持梵筴曰。",
        "from": "X77n1524_021:0510a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用是表信。",
        "from": "X77n1524_021:0510a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至期而師誕。",
        "from": "X77n1524_021:0510a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師頭骨嶄聳。",
        "from": "X77n1524_021:0510a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目光射人。",
        "from": "X77n1524_021:0510a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十五。",
        "from": "X77n1524_021:0510a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事方山長老。",
        "from": "X77n1524_021:0510a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "削髮披緇。",
        "from": "X77n1524_021:0510a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "背誦楞嚴。",
        "from": "X77n1524_021:0510a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至第五卷。",
        "from": "X77n1524_021:0510a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得嘔血疾。",
        "from": "X77n1524_021:0510a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃輟誦疾瘳。",
        "from": "X77n1524_021:0510a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕夢所未誦經。",
        "from": "X77n1524_021:0510a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆金書大字。",
        "from": "X77n1524_021:0510a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布列空中。",
        "from": "X77n1524_021:0510a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厲聲讀之。",
        "from": "X77n1524_021:0510a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既覺猶存。",
        "from": "X77n1524_021:0510a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "移時始隱。",
        "from": "X77n1524_021:0510a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自覺心地清涼。",
        "from": "X77n1524_021:0510a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾後一誦如流。",
        "from": "X77n1524_021:0510a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹後通前。",
        "from": "X77n1524_021:0510a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終身不忘矣。",
        "from": "X77n1524_021:0510a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復依竺元和尚。",
        "from": "X77n1524_021:0510a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究問上事。",
        "from": "X77n1524_021:0510a07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖提綱握要。",
        "from": "X77n1524_021:0510a08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然亦不廢此經。",
        "from": "X77n1524_021:0510a08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚年居西澗菴。",
        "from": "X77n1524_021:0510a08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不事匡徒。",
        "from": "X77n1524_021:0510a08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來者亦不深拒。",
        "from": "X77n1524_021:0510a09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翛然有政黃牛之風焉。",
        "from": "X77n1524_021:0510a09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性然傳",
        "from": "X77n1524_021:0510a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性然。",
        "from": "X77n1524_021:0510a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字寶燈。",
        "from": "X77n1524_021:0510a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東阿楊氏子。",
        "from": "X77n1524_021:0510a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世為田家。",
        "from": "X77n1524_021:0510a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生而多病。",
        "from": "X77n1524_021:0510a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十七。",
        "from": "X77n1524_021:0510a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄俗被服受戒。",
        "from": "X77n1524_021:0510a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夙具利根。",
        "from": "X77n1524_021:0510a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓發至願。",
        "from": "X77n1524_021:0510a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修淨業。",
        "from": "X77n1524_021:0510a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跪誦華嚴經九年。",
        "from": "X77n1524_021:0510a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鍵戶不出。",
        "from": "X77n1524_021:0510a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後忽出遊諸方。",
        "from": "X77n1524_021:0510a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏牛五臺。",
        "from": "X77n1524_021:0510a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南涉吳越。",
        "from": "X77n1524_021:0510a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西極秦隴。",
        "from": "X77n1524_021:0510a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名山勝剎。",
        "from": "X77n1524_021:0510a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有足跡。",
        "from": "X77n1524_021:0510a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行業精苦。",
        "from": "X77n1524_021:0510a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞益彰。",
        "from": "X77n1524_021:0510a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋里居香山寺。",
        "from": "X77n1524_021:0510a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺業一新。",
        "from": "X77n1524_021:0510a15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太守殷君三禮。",
        "from": "X77n1524_021:0510a15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時為諸生。",
        "from": "X77n1524_021:0510a15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知師最深。",
        "from": "X77n1524_021:0510a16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉之彌謹。",
        "from": "X77n1524_021:0510a16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師為精舍。",
        "from": "X77n1524_021:0510a16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立一小閣。",
        "from": "X77n1524_021:0510a16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棲止其中。",
        "from": "X77n1524_021:0510a16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復鍵結脩淨。",
        "from": "X77n1524_021:0510a17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視昔尤勤。",
        "from": "X77n1524_021:0510a17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦佛號。",
        "from": "X77n1524_021:0510a17_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食寤寐。",
        "from": "X77n1524_021:0510a17_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞輟聲。",
        "from": "X77n1524_021:0510a17_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寒暑昏曉。",
        "from": "X77n1524_021:0510a18_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞就枕。",
        "from": "X77n1524_021:0510a18_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "影不出山。",
        "from": "X77n1524_021:0510a18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迹不入俗。",
        "from": "X77n1524_021:0510a18_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是者六十餘年。",
        "from": "X77n1524_021:0510a18_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于公慎行。",
        "from": "X77n1524_021:0510a19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞叩之曰。",
        "from": "X77n1524_021:0510a19_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上人口誦彌陀。",
        "from": "X77n1524_021:0510a19_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生極樂否。",
        "from": "X77n1524_021:0510a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X77n1524_021:0510a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰為彌陀。",
        "from": "X77n1524_021:0510a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰為極樂。",
        "from": "X77n1524_021:0510a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾心是也。",
        "from": "X77n1524_021:0510a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聲相續。",
        "from": "X77n1524_021:0510a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不忘。",
        "from": "X77n1524_021:0510a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然五蘊空六根淨。",
        "from": "X77n1524_021:0510a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而蓮花現矣。",
        "from": "X77n1524_021:0510a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方極樂。",
        "from": "X77n1524_021:0510a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固在剎那。",
        "from": "X77n1524_021:0510a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈懸遠哉。",
        "from": "X77n1524_021:0510a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于。",
        "from": "X77n1524_021:0510a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服其言。",
        "from": "X77n1524_021:0510a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂其有靈竅。",
        "from": "X77n1524_021:0510a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非徒事勤苦者。",
        "from": "X77n1524_021:0510a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "買田一區為供。",
        "from": "X77n1524_021:0510a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師風骨稜稜。",
        "from": "X77n1524_021:0510a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眉角巖嶄。",
        "from": "X77n1524_021:0510a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年近期頤。",
        "from": "X77n1524_021:0510a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行步距躍。",
        "from": "X77n1524_021:0510a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造一坐龕置榻右。",
        "from": "X77n1524_021:0510a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時時入中。",
        "from": "X77n1524_021:0510a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少坐而笑。",
        "from": "X77n1524_021:0510b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽一日告終。",
        "from": "X77n1524_021:0510b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命促殷公。",
        "from": "X77n1524_021:0510b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至囑後事。",
        "from": "X77n1524_021:0510b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃扶服入龕。",
        "from": "X77n1524_021:0510b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趺坐而化。",
        "from": "X77n1524_021:0510b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生弘治庚申。",
        "from": "X77n1524_021:0510b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒萬曆癸巳。",
        "from": "X77n1524_021:0510b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年九十四也。",
        "from": "X77n1524_021:0510b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普明傳",
        "from": "X77n1524_021:0510b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普明。",
        "from": "X77n1524_021:0510b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字寂炤。",
        "from": "X77n1524_021:0510b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉善妙常菴僧也。",
        "from": "X77n1524_021:0510b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薙髮受具。",
        "from": "X77n1524_021:0510b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日誦法華經不輟。",
        "from": "X77n1524_021:0510b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間萬事。",
        "from": "X77n1524_021:0510b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了不經懷。",
        "from": "X77n1524_021:0510b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入古杭山中。",
        "from": "X77n1524_021:0510b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉門讀誦。",
        "from": "X77n1524_021:0510b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦畢靜坐而已。",
        "from": "X77n1524_021:0510b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇鼠鳥雀。",
        "from": "X77n1524_021:0510b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日與明狎。",
        "from": "X77n1524_021:0510b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嬉遊於前。",
        "from": "X77n1524_021:0510b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶客至叩門。",
        "from": "X77n1524_021:0510b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆飛走而去。",
        "from": "X77n1524_021:0510b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不及去者。",
        "from": "X77n1524_021:0510b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒手取納諸懷。",
        "from": "X77n1524_021:0510b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以衣覆之。",
        "from": "X77n1524_021:0510b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "客去則出。",
        "from": "X77n1524_021:0510b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嬉狎如故。",
        "from": "X77n1524_021:0510b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一病者詣之。",
        "from": "X77n1524_021:0510b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手摩其頂。",
        "from": "X77n1524_021:0510b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夙患頓除。",
        "from": "X77n1524_021:0510b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂委身為弟子。",
        "from": "X77n1524_021:0510b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日謂弟子曰。",
        "from": "X77n1524_021:0510b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我五月十八日逝矣。",
        "from": "X77n1524_021:0510b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子。",
        "from": "X77n1524_021:0510b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五月非吉為對。",
        "from": "X77n1524_021:0510b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰。",
        "from": "X77n1524_021:0510b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則八月也。",
        "from": "X77n1524_021:0510b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既訂。",
        "from": "X77n1524_021:0510b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即歸嘉善。",
        "from": "X77n1524_021:0510b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屆期弟子來視。",
        "from": "X77n1524_021:0510b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明方掃地。",
        "from": "X77n1524_021:0510b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語之曰。",
        "from": "X77n1524_021:0510b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝不來。",
        "from": "X77n1524_021:0510b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾幾忘矣。",
        "from": "X77n1524_021:0510b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命聲鐘集眾。",
        "from": "X77n1524_021:0510b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書偈曰。",
        "from": "X77n1524_021:0510b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這個老漢。",
        "from": "X77n1524_021:0510b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全無思算。",
        "from": "X77n1524_021:0510b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪不會參。",
        "from": "X77n1524_021:0510b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經不會看。",
        "from": "X77n1524_021:0510b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生平百拙無能。",
        "from": "X77n1524_021:0510b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晦跡青松岩畔。",
        "from": "X77n1524_021:0510b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜如磐石泰山。",
        "from": "X77n1524_021:0510b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動若雷轟掣電。",
        "from": "X77n1524_021:0510b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲筆端坐而化。",
        "from": "X77n1524_021:0510b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茶毗。",
        "from": "X77n1524_021:0510b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火光五色燭天。",
        "from": "X77n1524_021:0510b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異香經夕不散。",
        "from": "X77n1524_021:0510b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌本不壞。",
        "from": "X77n1524_021:0510b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叩之有聲。",
        "from": "X77n1524_021:0510b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化後旬餘。",
        "from": "X77n1524_021:0510b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人猶見之古杭。",
        "from": "X77n1524_021:0510b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜極光通。",
        "from": "X77n1524_021:0510b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去留自在。",
        "from": "X77n1524_021:0510b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是亦持誦有得者也。",
        "from": "X77n1524_021:0510b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "補續高僧傳卷第二十一",
        "from": "X77n1524_021:0510b20_0",
        "context_with_next_sentence": false
    }
]