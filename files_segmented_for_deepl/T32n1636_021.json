[
    {
        "source_sentence": "大乘集菩薩學論卷第二十一",
        "from": "T32n1636_021:0129b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1636_021:0129b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿宣梵大師賜紫",
        "from": "T32n1636_021:0129b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣日稱等奉　詔譯",
        "from": "T32n1636_021:0129b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長勝力品第十六之餘",
        "from": "T32n1636_021:0129b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_021:0129b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名為深心覺了。",
        "from": "T32n1636_021:0129b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡意經云。",
        "from": "T32n1636_021:0129b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次是心於諸所作離欺詐故。",
        "from": "T32n1636_021:0129b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離欺詐者。",
        "from": "T32n1636_021:0129b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不起諂故。",
        "from": "T32n1636_021:0129b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不起諂者。",
        "from": "T32n1636_021:0129b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能決定故。",
        "from": "T32n1636_021:0129b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能決定者。",
        "from": "T32n1636_021:0129b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除誑幻故。",
        "from": "T32n1636_021:0129b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除誑幻者。",
        "from": "T32n1636_021:0129b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住清淨故。",
        "from": "T32n1636_021:0129b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住清淨者。",
        "from": "T32n1636_021:0129b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常正直故。",
        "from": "T32n1636_021:0129b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常正直者。",
        "from": "T32n1636_021:0129b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邪曲故。",
        "from": "T32n1636_021:0129b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邪曲者。",
        "from": "T32n1636_021:0129b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性明了故。",
        "from": "T32n1636_021:0129b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性明了者。",
        "from": "T32n1636_021:0129b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善悟解故。",
        "from": "T32n1636_021:0129c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善悟解者。",
        "from": "T32n1636_021:0129c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得真實故。",
        "from": "T32n1636_021:0129c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得真實者。",
        "from": "T32n1636_021:0129c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可壞故。",
        "from": "T32n1636_021:0129c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可壞者。",
        "from": "T32n1636_021:0129c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲堅牢故。",
        "from": "T32n1636_021:0129c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲堅牢者。",
        "from": "T32n1636_021:0129c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得不動故。",
        "from": "T32n1636_021:0129c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得不動者。",
        "from": "T32n1636_021:0129c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不捨眾生。",
        "from": "T32n1636_021:0129c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故此說是為深心覺了。",
        "from": "T32n1636_021:0129c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是經復說。",
        "from": "T32n1636_021:0129c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上殊勝深心修習。",
        "from": "T32n1636_021:0129c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住寂靜慈覆眾生。",
        "from": "T32n1636_021:0129c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於賢善者恭敬尊重。",
        "from": "T32n1636_021:0129c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非賢善者悲心濟拔。",
        "from": "T32n1636_021:0129c06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無捄護者為作捄護。",
        "from": "T32n1636_021:0129c06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無依歸者為作依歸。",
        "from": "T32n1636_021:0129c07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於漂泊者為作洲渚。",
        "from": "T32n1636_021:0129c07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無主宰者為作主宰。",
        "from": "T32n1636_021:0129c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無伴侶者為作伴侶。",
        "from": "T32n1636_021:0129c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於邪曲者使令正直。",
        "from": "T32n1636_021:0129c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於暴惡者使令柔順。",
        "from": "T32n1636_021:0129c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諂諛者使令中正。",
        "from": "T32n1636_021:0129c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於虛誑者使令誠諦。",
        "from": "T32n1636_021:0129c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於姦宄者使令淳質。",
        "from": "T32n1636_021:0129c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知恩者使令知恩。",
        "from": "T32n1636_021:0129c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於苦惱者令得安隱。",
        "from": "T32n1636_021:0129c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不饒益者為作饒益。",
        "from": "T32n1636_021:0129c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我慢者使令謙下。",
        "from": "T32n1636_021:0129c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於毀訾者使令讚美。",
        "from": "T32n1636_021:0129c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於錯謬者為作教詔。",
        "from": "T32n1636_021:0129c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無守護者為作守護。",
        "from": "T32n1636_021:0129c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於相違者不見過咎。",
        "from": "T32n1636_021:0129c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸師尊起清淨行。",
        "from": "T32n1636_021:0129c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便善巧等心恭敬。",
        "from": "T32n1636_021:0129c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於所教誨憶持不忘。",
        "from": "T32n1636_021:0129c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_021:0129c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是漸次深心修作。",
        "from": "T32n1636_021:0129c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能增長勝力大悲現前。",
        "from": "T32n1636_021:0129c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法集經云。",
        "from": "T32n1636_021:0129c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀世音菩薩白佛言。",
        "from": "T32n1636_021:0129c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_021:0129c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩修學不須多法。",
        "from": "T32n1636_021:0129c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持一法則能善知一切佛法。",
        "from": "T32n1636_021:0129c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是一法者。",
        "from": "T32n1636_021:0129c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂大悲。",
        "from": "T32n1636_021:0129c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩能行大悲。",
        "from": "T32n1636_021:0129c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能攝取一切佛法如在掌中。",
        "from": "T32n1636_021:0129c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_021:0129c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如轉輪王所有輪寶隨其所至皆悉隨從。",
        "from": "T32n1636_021:0129c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若起大悲則於諸佛法自然獲得亦復如是。",
        "from": "T32n1636_021:0129c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_021:0129c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如日出光照世間諸有情類所作事業皆得成辦。",
        "from": "T32n1636_021:0129c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若以大悲照於一切菩提分法則易修作亦復如是。",
        "from": "T32n1636_021:0129c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_021:0129c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如諸根以意為本。",
        "from": "T32n1636_021:0129c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能取於自分境界。",
        "from": "T32n1636_021:0129c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩住於大悲則於一切菩提分法各各修作如理而行。",
        "from": "T32n1636_021:0129c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_021:0129c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如依彼命根有餘諸根。",
        "from": "T32n1636_021:0129c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若有大悲則能修諸菩提分法。",
        "from": "T32n1636_021:0129c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又無盡意經云。",
        "from": "T32n1636_021:0130a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如人之命根以出入息而為其本。",
        "from": "T32n1636_021:0130a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是菩薩修學大乘即以大悲而為其本。",
        "from": "T32n1636_021:0130a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如長者唯有一子愛念情重未曾暫捨。",
        "from": "T32n1636_021:0130a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩獲得大悲於諸眾生愛之若子亦復如是。",
        "from": "T32n1636_021:0130a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_021:0130a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云何觀。",
        "from": "T32n1636_021:0130a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂以慈修心。",
        "from": "T32n1636_021:0130a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生愛猶己子。",
        "from": "T32n1636_021:0130a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去世時無量苦惱。",
        "from": "T32n1636_021:0130a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現生之中病苦大海。",
        "from": "T32n1636_021:0130a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來長時輪回險難。",
        "from": "T32n1636_021:0130a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如十地經說。",
        "from": "T32n1636_021:0130a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智愚癡異生之類。",
        "from": "T32n1636_021:0130a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無數身已滅現滅當滅。",
        "from": "T32n1636_021:0130a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是滅已。",
        "from": "T32n1636_021:0130a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能於身而生厭患。",
        "from": "T32n1636_021:0130a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉更增長眾苦機關。",
        "from": "T32n1636_021:0130a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨生死流不能出離。",
        "from": "T32n1636_021:0130a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能棄捨。",
        "from": "T32n1636_021:0130a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸蘊執藏。",
        "from": "T32n1636_021:0130a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能遠離大種毒蛇。",
        "from": "T32n1636_021:0130a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能觀察六處空聚。",
        "from": "T32n1636_021:0130a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能斷除我及我所。",
        "from": "T32n1636_021:0130a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能拔出見慢毒箭。",
        "from": "T32n1636_021:0130a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能息滅貪恚癡火。",
        "from": "T32n1636_021:0130a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能破壞無明黑暗。",
        "from": "T32n1636_021:0130a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能枯涸渴愛巨浪。",
        "from": "T32n1636_021:0130a15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求十力大聖導師。",
        "from": "T32n1636_021:0130a15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入邪稠林隨逐魔黨。",
        "from": "T32n1636_021:0130a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於輪回海一向漂沒。",
        "from": "T32n1636_021:0130a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明卵穀厚膜纏裹。",
        "from": "T32n1636_021:0130a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老病死苦常所逼切。",
        "from": "T32n1636_021:0130a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為愍諸有情等而作救護。",
        "from": "T32n1636_021:0130a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積集無量福智資糧。",
        "from": "T32n1636_021:0130a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是善根。",
        "from": "T32n1636_021:0130a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉令得究竟清淨。",
        "from": "T32n1636_021:0130a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼經復說。",
        "from": "T32n1636_021:0130a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸有情馳騁生死險難惡道地獄傍生琰魔羅界。",
        "from": "T32n1636_021:0130a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡暗蔽闕大導師。",
        "from": "T32n1636_021:0130a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至沒於愛河洄澓流轉。",
        "from": "T32n1636_021:0130a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不暇省滅欲恚害尋。",
        "from": "T32n1636_021:0130a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無由棄捨貪欲習氣。",
        "from": "T32n1636_021:0130a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身見羅剎之所執持。",
        "from": "T32n1636_021:0130a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我慢洲渚無所依怙。",
        "from": "T32n1636_021:0130a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能超越六處聚落。",
        "from": "T32n1636_021:0130a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無少善根而能濟渡。",
        "from": "T32n1636_021:0130a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我今以大悲力拔彼眾生。",
        "from": "T32n1636_021:0130a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令脫苦難離垢寂靜。",
        "from": "T32n1636_021:0130a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令安住一切智智大寶洲故。",
        "from": "T32n1636_021:0130a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸有情憂悲苦惱隨轉連縛。",
        "from": "T32n1636_021:0130a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪愛桎梏之所檢繫。",
        "from": "T32n1636_021:0130a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明諂誑長時覆翳。",
        "from": "T32n1636_021:0130a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三界獄不求出離。",
        "from": "T32n1636_021:0130a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆令脫種種怖畏現前苦惱。",
        "from": "T32n1636_021:0130a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使無障礙得安隱樂。",
        "from": "T32n1636_021:0130a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_021:0130b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是於他堅固深心。",
        "from": "T32n1636_021:0130b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能增長大悲福行。",
        "from": "T32n1636_021:0130b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又最上問經云。",
        "from": "T32n1636_021:0130b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜六時著新淨衣。",
        "from": "T32n1636_021:0130b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮敬諸佛常生尊重。",
        "from": "T32n1636_021:0130b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第修作成普賢行。",
        "from": "T32n1636_021:0130b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又三聚經說。",
        "from": "T32n1636_021:0130b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭面接足禮敬諸佛。",
        "from": "T32n1636_021:0130b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能懺除一切罪垢。",
        "from": "T32n1636_021:0130b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三聚者。",
        "from": "T32n1636_021:0130b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂懺悔勸請隨喜福等。",
        "from": "T32n1636_021:0130b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又優波離所問經中但明勸請一種義利。",
        "from": "T32n1636_021:0130b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解諸魔網。",
        "from": "T32n1636_021:0130b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟無常故。",
        "from": "T32n1636_021:0130b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又等行禮敬一切諸佛。",
        "from": "T32n1636_021:0130b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無盡意經說。",
        "from": "T32n1636_021:0130b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他懺悔所獲福行。",
        "from": "T32n1636_021:0130b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如普賢行四伽陀中說。",
        "from": "T32n1636_021:0130b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜福行。",
        "from": "T32n1636_021:0130b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如月燈經隨喜品說。",
        "from": "T32n1636_021:0130b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘經中具明三種。",
        "from": "T32n1636_021:0130b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明廣大供養回向行相。",
        "from": "T32n1636_021:0130b11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寶雲經云。",
        "from": "T32n1636_021:0130b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩以所生花及諸焚香。",
        "from": "T32n1636_021:0130b12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "栴檀香樹劫樹寶樹。",
        "from": "T32n1636_021:0130b12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無主宰者無執持者晝夜六時運心供養佛菩薩等。",
        "from": "T32n1636_021:0130b13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又三三昧耶經云。",
        "from": "T32n1636_021:0130b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界國土所有地生寶山水生寶山一切妙藥諸清淨水上妙飲食及諸金寶乃至北俱盧洲林藤地味自然香稻最上愛樂所受用者。",
        "from": "T32n1636_021:0130b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長時運心如前供養。",
        "from": "T32n1636_021:0130b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_021:0130b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所明廣大親近承事供養佛菩薩等。",
        "from": "T32n1636_021:0130b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是聞已。",
        "from": "T32n1636_021:0130b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟一心依教而行發願回向。",
        "from": "T32n1636_021:0130b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如普賢行經見金剛幢經或十地經中說。",
        "from": "T32n1636_021:0130b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次菩薩摩訶薩住極喜地。",
        "from": "T32n1636_021:0130b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引發十種廣大誓願。",
        "from": "T32n1636_021:0130b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂承事供養一切如來。",
        "from": "T32n1636_021:0130b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能成就清淨勝解。",
        "from": "T32n1636_021:0130b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行相盡虛空界同等法性。",
        "from": "T32n1636_021:0130b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0130b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸佛出興於世。",
        "from": "T32n1636_021:0130b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大供養無有休息。",
        "from": "T32n1636_021:0130b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第一大願。",
        "from": "T32n1636_021:0130b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲受持一切如來所說法眼善能守護諸佛正教。",
        "from": "T32n1636_021:0130b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0130b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0130b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受正法無有休息。",
        "from": "T32n1636_021:0130b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第二大願。",
        "from": "T32n1636_021:0130b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於諸佛出現於世。",
        "from": "T32n1636_021:0130c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最初安住兜率天宮降神託陰住胎誕生長年出家修行苦行坐菩提場降伏諸魔轉正法輪示涅盤相。",
        "from": "T32n1636_021:0130c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最先加行往詣供養。",
        "from": "T32n1636_021:0130c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處同時而轉最上法輪。",
        "from": "T32n1636_021:0130c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0130c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0130c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸佛出現世間。",
        "from": "T32n1636_021:0130c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請轉法輪無有休息。",
        "from": "T32n1636_021:0130c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第三大願。",
        "from": "T32n1636_021:0130c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲引發廣大無量諸菩薩行。",
        "from": "T32n1636_021:0130c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無分別諸波羅蜜圓滿清淨。",
        "from": "T32n1636_021:0130c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所攝諸地總相別相。",
        "from": "T32n1636_021:0130c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同相異相。",
        "from": "T32n1636_021:0130c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成相壞相。",
        "from": "T32n1636_021:0130c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實無倒。",
        "from": "T32n1636_021:0130c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯示教誡諸菩薩行。",
        "from": "T32n1636_021:0130c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令發心。",
        "from": "T32n1636_021:0130c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0130c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0130c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所行正行無有休息。",
        "from": "T32n1636_021:0130c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第四大願。",
        "from": "T32n1636_021:0130c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲成熟諸有情界。",
        "from": "T32n1636_021:0130c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有色無色。",
        "from": "T32n1636_021:0130c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有想無想。",
        "from": "T32n1636_021:0130c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有想非無想。",
        "from": "T32n1636_021:0130c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卵生胎生濕生化生。",
        "from": "T32n1636_021:0130c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界六趣之所繫屬。",
        "from": "T32n1636_021:0130c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名色所攝使令永斷。",
        "from": "T32n1636_021:0130c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切趣數皆悉入於諸佛法中。",
        "from": "T32n1636_021:0130c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟安住一切智智使無遺餘盡虛空界同等法性。",
        "from": "T32n1636_021:0130c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0130c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成熟有情無有休息。",
        "from": "T32n1636_021:0130c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第五大願。",
        "from": "T32n1636_021:0130c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲入解十方世界。",
        "from": "T32n1636_021:0130c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若廣若狹若麁若細。",
        "from": "T32n1636_021:0130c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或覆或仰雜亂而住。",
        "from": "T32n1636_021:0130c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如帝網分位各異。",
        "from": "T32n1636_021:0130c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以相應智現前了知。",
        "from": "T32n1636_021:0130c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0130c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0130c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能入解如是世界無有休息。",
        "from": "T32n1636_021:0130c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第六大願。",
        "from": "T32n1636_021:0130c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲嚴淨諸佛國土。",
        "from": "T32n1636_021:0130c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛剎至一佛剎。",
        "from": "T32n1636_021:0130c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以光明周遍瑩飾。",
        "from": "T32n1636_021:0130c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸煩惱成清淨土。",
        "from": "T32n1636_021:0130c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大智有情充滿其中。",
        "from": "T32n1636_021:0130c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普入諸佛廣大境界。",
        "from": "T32n1636_021:0130c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸有情意樂歸向。",
        "from": "T32n1636_021:0130c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等顯示皆令歡喜。",
        "from": "T32n1636_021:0131a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0131a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0131a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及佛剎數普令嚴淨無有休息。",
        "from": "T32n1636_021:0131a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第七大願。",
        "from": "T32n1636_021:0131a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲與諸大菩薩眾同一意樂積集善根。",
        "from": "T32n1636_021:0131a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一所緣住平等性。",
        "from": "T32n1636_021:0131a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得值遇諸佛菩薩。",
        "from": "T32n1636_021:0131a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所欲不相捨離。",
        "from": "T32n1636_021:0131a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示佛威力等同發心。",
        "from": "T32n1636_021:0131a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復獲得不退神通。",
        "from": "T32n1636_021:0131a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能往詣一切世界。",
        "from": "T32n1636_021:0131a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大眾中現同類身。",
        "from": "T32n1636_021:0131a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂修菩薩所行正行。",
        "from": "T32n1636_021:0131a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟不思議大乘妙法。",
        "from": "T32n1636_021:0131a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0131a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0131a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等諸菩薩悟入大乘無有休息。",
        "from": "T32n1636_021:0131a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第八大願。",
        "from": "T32n1636_021:0131a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲乘御不退轉輪諸菩薩行。",
        "from": "T32n1636_021:0131a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身語意業皆不唐捐。",
        "from": "T32n1636_021:0131a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若暫見所作於佛法中便得決定。",
        "from": "T32n1636_021:0131a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫聞言音即生淨信。",
        "from": "T32n1636_021:0131a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能起正智永斷煩惱。",
        "from": "T32n1636_021:0131a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願令是身如大藥樹救諸疾苦。",
        "from": "T32n1636_021:0131a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如如意寶濟諸貧乏。",
        "from": "T32n1636_021:0131a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣利眾生修菩薩行。",
        "from": "T32n1636_021:0131a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0131a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0131a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不虛所行無有休息。",
        "from": "T32n1636_021:0131a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為發起第九大願。",
        "from": "T32n1636_021:0131a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於十方一切世界當證無上正等菩提。",
        "from": "T32n1636_021:0131a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其所化毛道眾生或一或多。",
        "from": "T32n1636_021:0131a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆能顯示降生出家成等正覺轉大法輪入般涅盤。",
        "from": "T32n1636_021:0131a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示佛境界智惠威力。",
        "from": "T32n1636_021:0131a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸有情之所意樂。",
        "from": "T32n1636_021:0131a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於剎那頃普令覺悟。",
        "from": "T32n1636_021:0131a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡眾生界真實回向。",
        "from": "T32n1636_021:0131a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯一菩提廣大涅盤。",
        "from": "T32n1636_021:0131a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸以一音宣說法要。",
        "from": "T32n1636_021:0131a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸有情心皆悅豫。",
        "from": "T32n1636_021:0131a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力悉能充滿一切世界。",
        "from": "T32n1636_021:0131a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示大智力則能建立一切諸法。",
        "from": "T32n1636_021:0131a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示大涅盤而不泯絕一切諸行。",
        "from": "T32n1636_021:0131a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界同等法性。",
        "from": "T32n1636_021:0131a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮未來際一切劫數。",
        "from": "T32n1636_021:0131a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成三菩提無有休息。",
        "from": "T32n1636_021:0131a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為菩薩引發十種廣大誓願。",
        "from": "T32n1636_021:0131a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_021:0131b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀想深心精進。",
        "from": "T32n1636_021:0131b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處作是回向。",
        "from": "T32n1636_021:0131b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如觀音解脫經云。",
        "from": "T32n1636_021:0131b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我所作一切善根平等回向。",
        "from": "T32n1636_021:0131b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離墮落怖。",
        "from": "T32n1636_021:0131b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生脫諸眷屬恩愛怖。",
        "from": "T32n1636_021:0131b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生滅愚癡怖。",
        "from": "T32n1636_021:0131b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生斷繫縛怖。",
        "from": "T32n1636_021:0131b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離斷命怖。",
        "from": "T32n1636_021:0131b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離貧窮怖。",
        "from": "T32n1636_021:0131b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離夭壽怖。",
        "from": "T32n1636_021:0131b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離毀謗怖。",
        "from": "T32n1636_021:0131b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離輪回怖。",
        "from": "T32n1636_021:0131b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離大眾威德怖。",
        "from": "T32n1636_021:0131b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離諸死怖。",
        "from": "T32n1636_021:0131b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離惡趣怖。",
        "from": "T32n1636_021:0131b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離黑闇怖。",
        "from": "T32n1636_021:0131b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離冤憎會怖。",
        "from": "T32n1636_021:0131b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離愛別離怖。",
        "from": "T32n1636_021:0131b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離憎嫉怖。",
        "from": "T32n1636_021:0131b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生離身心逼惱怖。",
        "from": "T32n1636_021:0131b11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生斷除憂悲苦惱怖。",
        "from": "T32n1636_021:0131b11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此略明回向。",
        "from": "T32n1636_021:0131b12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如普賢行經中偈云。",
        "from": "T32n1636_021:0131b12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　清淨勇猛文殊尊　　普賢勝得亦如是　彼二大士說回向　　我當隨順而修學　十方三世諸如來　　所說回向清淨教　我今積集諸善根　　悉同最上普賢行恭敬作禮品第十七論曰。",
        "from": "T32n1636_021:0131b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明次第禮敬諸佛增長福行。",
        "from": "T32n1636_021:0131b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當云何知。",
        "from": "T32n1636_021:0131b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如觀察世間經偈云。",
        "from": "T32n1636_021:0131b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若一剎那頃　　承事於諸佛",
        "from": "T32n1636_021:0131b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我說所得報　　永離八無暇",
        "from": "T32n1636_021:0131b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　形色極殊好　　成就相莊嚴",
        "from": "T32n1636_021:0131b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　安住佛法中　　無復諸懈怠",
        "from": "T32n1636_021:0131b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是人於現在　　受用皆充足",
        "from": "T32n1636_021:0131b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常為眾所尊　　無病身光潔",
        "from": "T32n1636_021:0131b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後生長者家　　尊崇無與等",
        "from": "T32n1636_021:0131b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣興於惠施　　珍寶無慳悋",
        "from": "T32n1636_021:0131b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　復作轉輪王　　統御四天下",
        "from": "T32n1636_021:0131b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　人民咸善順　　國土皆豐樂",
        "from": "T32n1636_021:0131c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　威德力具足　　七寶皆殊絕",
        "from": "T32n1636_021:0131c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於一切時中　　而勤修供養",
        "from": "T32n1636_021:0131c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得生忉利宮　　自在彌盧頂",
        "from": "T32n1636_021:0131c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為帝釋天主　　奉持清淨教",
        "from": "T32n1636_021:0131c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人於佛塔　　合掌而右旋",
        "from": "T32n1636_021:0131c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於俱胝劫中　　受福無窮盡",
        "from": "T32n1636_021:0131c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又復於佛塔　　發心而致禮",
        "from": "T32n1636_021:0131c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於無量劫中　　離生盲跛躄",
        "from": "T32n1636_021:0131c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　堅固諸善根　　具勇猛精進",
        "from": "T32n1636_021:0131c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　速得成菩提　　斯由禮佛塔",
        "from": "T32n1636_021:0131c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若於惡世中　　向佛暫歸命",
        "from": "T32n1636_021:0131c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　則為已親近　　百千俱胝佛",
        "from": "T32n1636_021:0131c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是人於世間　　最勝無過上",
        "from": "T32n1636_021:0131c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自在人中仙　　端正無倫匹",
        "from": "T32n1636_021:0131c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人以花鬘　　奉施於佛塔",
        "from": "T32n1636_021:0131c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　從此人中沒　　生三十三天",
        "from": "T32n1636_021:0131c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　乘上妙輦輿　　珍寶而嚴飾",
        "from": "T32n1636_021:0131c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　宮殿樓閣中　　天女常圍繞",
        "from": "T32n1636_021:0131c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　有清淨池沼　　八德水盈溢",
        "from": "T32n1636_021:0131c20_0",
        "context_with_next_sentence": true
    },
    {
