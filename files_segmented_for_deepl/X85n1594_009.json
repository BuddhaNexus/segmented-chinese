[
    {
        "source_sentence": "佛祖綱目卷第九(日字號)",
        "from": "X85n1594_009:0574a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(周定王十年起)丙子(簡王元年)庚寅(靈王元年)丁巳(景王元年)癸亥(周景王七年止)(辛未)七祖婆須蜜傳法佛陀難提婆須蜜。",
        "from": "X85n1594_009:0574a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北天竺國人。",
        "from": "X85n1594_009:0574a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓頗羅墮。",
        "from": "X85n1594_009:0574a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常服淨衣。",
        "from": "X85n1594_009:0574a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執酒器遊行里閈。",
        "from": "X85n1594_009:0574a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或吟或嘯。",
        "from": "X85n1594_009:0574a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人謂之狂。",
        "from": "X85n1594_009:0574a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及遇彌遮迦。",
        "from": "X85n1594_009:0574a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣如來往誌。",
        "from": "X85n1594_009:0574a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自省前緣。",
        "from": "X85n1594_009:0574a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投器出家。",
        "from": "X85n1594_009:0574a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受法行化。",
        "from": "X85n1594_009:0574a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至迦摩羅國。",
        "from": "X85n1594_009:0574a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣興佛事。",
        "from": "X85n1594_009:0574a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法座前。",
        "from": "X85n1594_009:0574a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有一智者。",
        "from": "X85n1594_009:0574a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自稱我名佛陀難提。",
        "from": "X85n1594_009:0574a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今與師論義。",
        "from": "X85n1594_009:0574a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆須蜜曰。",
        "from": "X85n1594_009:0574a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者論即不義。",
        "from": "X85n1594_009:0574a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義即不論。",
        "from": "X85n1594_009:0574a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若擬論義。",
        "from": "X85n1594_009:0574a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終非義論。",
        "from": "X85n1594_009:0574a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提知婆須蜜義勝。",
        "from": "X85n1594_009:0574a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心即欽服曰。",
        "from": "X85n1594_009:0574a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我願求道。",
        "from": "X85n1594_009:0574a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霑甘露味。",
        "from": "X85n1594_009:0574a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆須蜜遂與剃度。",
        "from": "X85n1594_009:0574a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而授具戒。",
        "from": "X85n1594_009:0574a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告之曰。",
        "from": "X85n1594_009:0574a18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來正法眼藏。",
        "from": "X85n1594_009:0574a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今付汝。",
        "from": "X85n1594_009:0574a19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當護持。",
        "from": "X85n1594_009:0574a19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃說偈曰。",
        "from": "X85n1594_009:0574a19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心同虗空界。",
        "from": "X85n1594_009:0574a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示等虗空法。",
        "from": "X85n1594_009:0574a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得虗空時。",
        "from": "X85n1594_009:0574a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無是無非法。",
        "from": "X85n1594_009:0574a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈已。",
        "from": "X85n1594_009:0574a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆須蜜即入慈心三昧。",
        "from": "X85n1594_009:0574a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時梵王帝釋。",
        "from": "X85n1594_009:0574a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸天眾俱來。",
        "from": "X85n1594_009:0574a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮而說偈言。",
        "from": "X85n1594_009:0574a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢劫眾聖祖。",
        "from": "X85n1594_009:0574a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而當第七位。",
        "from": "X85n1594_009:0574a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者哀念我。",
        "from": "X85n1594_009:0574a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請為宣佛地。",
        "from": "X85n1594_009:0574a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆須蜜從三昧起。",
        "from": "X85n1594_009:0574a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示眾曰。",
        "from": "X85n1594_009:0574a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所得法。",
        "from": "X85n1594_009:0574a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而非有故。",
        "from": "X85n1594_009:0574a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若識佛地離有無故。",
        "from": "X85n1594_009:0574a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語已。",
        "from": "X85n1594_009:0574a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還入三昧。",
        "from": "X85n1594_009:0574a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示涅槃相。",
        "from": "X85n1594_009:0574b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提即於本座。",
        "from": "X85n1594_009:0574b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起七寶塔。",
        "from": "X85n1594_009:0574b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以葬全身。",
        "from": "X85n1594_009:0574b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土周定王十七年辛未歲也。",
        "from": "X85n1594_009:0574b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(庚戌)震旦國孔丘示生",
        "from": "X85n1594_009:0574b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "商帝乙之子。",
        "from": "X85n1594_009:0574b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微子。",
        "from": "X85n1594_009:0574b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始封於宋。",
        "from": "X85n1594_009:0574b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三世孔防叔。",
        "from": "X85n1594_009:0574b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徙居於魯國陬邑平鄉。",
        "from": "X85n1594_009:0574b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "防叔子伯夏。",
        "from": "X85n1594_009:0574b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伯夏子叔梁紇。",
        "from": "X85n1594_009:0574b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先娶鄒氏女。",
        "from": "X85n1594_009:0574b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生子孟皮。",
        "from": "X85n1594_009:0574b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不才。",
        "from": "X85n1594_009:0574b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後娶顏氏女名徵。",
        "from": "X85n1594_009:0574b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在禱於尼丘山。",
        "from": "X85n1594_009:0574b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生孔子。",
        "from": "X85n1594_009:0574b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂名丘。",
        "from": "X85n1594_009:0574b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字仲尼。",
        "from": "X85n1594_009:0574b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誕之夕。",
        "from": "X85n1594_009:0574b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二龍遶室。",
        "from": "X85n1594_009:0574b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五老降庭。",
        "from": "X85n1594_009:0574b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏氏之房。",
        "from": "X85n1594_009:0574b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞鈞天之樂。",
        "from": "X85n1594_009:0574b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身長九尺六寸。",
        "from": "X85n1594_009:0574b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腰帶十圍。",
        "from": "X85n1594_009:0574b08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂手過膝。",
        "from": "X85n1594_009:0574b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月角日準。",
        "from": "X85n1594_009:0574b09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河目海口。",
        "from": "X85n1594_009:0574b09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍顏方顙鳳顒。",
        "from": "X85n1594_009:0574b09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燕頷。",
        "from": "X85n1594_009:0574b09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虬髭虎視。",
        "from": "X85n1594_009:0574b10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眉有十二采。",
        "from": "X85n1594_009:0574b10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目有六十四理。",
        "from": "X85n1594_009:0574b10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時周靈王二十一年十一月四日。",
        "from": "X85n1594_009:0574b10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魯襄公二十二年也。",
        "from": "X85n1594_009:0574b11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦會中。",
        "from": "X85n1594_009:0574b11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子為儒童菩薩。",
        "from": "X85n1594_009:0574b12_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏回為月光菩薩。",
        "from": "X85n1594_009:0574b12_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X85n1594_009:0574b12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻浮界內。",
        "from": "X85n1594_009:0574b12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有震旦國。",
        "from": "X85n1594_009:0574b13_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我遣三聖。",
        "from": "X85n1594_009:0574b13_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在中化導。",
        "from": "X85n1594_009:0574b13_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人民慈哀。",
        "from": "X85n1594_009:0574b13_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮義具足。",
        "from": "X85n1594_009:0574b13_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛滅至孔子生。",
        "from": "X85n1594_009:0574b14_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡四百年。",
        "from": "X85n1594_009:0574b14_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第九",
        "from": "X85n1594_009:0574b16_0",
        "context_with_next_sentence": false
    }
]