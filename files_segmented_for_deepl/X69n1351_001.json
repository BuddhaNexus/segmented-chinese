[
    {
        "source_sentence": "白雲守端禪師語錄卷上",
        "from": "X69n1351_001:0294b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上堂",
        "from": "X69n1351_001:0294b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卍云。",
        "from": "X69n1351_001:0294b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上堂法語。",
        "from": "X69n1351_001:0294b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既載于續刊古尊宿語要卷三。",
        "from": "X69n1351_001:0294b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今不再錄。",
        "from": "X69n1351_001:0294b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但収所遺者耳。",
        "from": "X69n1351_001:0294b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上堂。",
        "from": "X69n1351_001:0294b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將此深心奉塵剎。",
        "from": "X69n1351_001:0294b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名為報佛恩。",
        "from": "X69n1351_001:0294b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓通則不然。",
        "from": "X69n1351_001:0294b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時挑野菜和根煑。",
        "from": "X69n1351_001:0294b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋斫生柴帶葉燒。",
        "from": "X69n1351_001:0294b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示眾云。",
        "from": "X69n1351_001:0294b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我按指。",
        "from": "X69n1351_001:0294b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海印發光。",
        "from": "X69n1351_001:0294b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈拄杖云。",
        "from": "X69n1351_001:0294b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山河大地。",
        "from": "X69n1351_001:0294b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水鳥樹林。",
        "from": "X69n1351_001:0294b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情與無情。",
        "from": "X69n1351_001:0294b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡向拄杖頭上。",
        "from": "X69n1351_001:0294b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大獅子吼。",
        "from": "X69n1351_001:0294b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說摩訶大般若。",
        "from": "X69n1351_001:0294b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道。",
        "from": "X69n1351_001:0294b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台南嶽。",
        "from": "X69n1351_001:0294b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說什麼法門。",
        "from": "X69n1351_001:0294b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南嶽說。",
        "from": "X69n1351_001:0294b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞山五位修行。",
        "from": "X69n1351_001:0294b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君臣父子。",
        "from": "X69n1351_001:0294b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各得其宜。",
        "from": "X69n1351_001:0294b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫守寒巖異草青。",
        "from": "X69n1351_001:0294b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐斷白雲宗不妙。",
        "from": "X69n1351_001:0294b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台說。",
        "from": "X69n1351_001:0294b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨濟三玄三要。",
        "from": "X69n1351_001:0294b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四料揀。",
        "from": "X69n1351_001:0294b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一喝分賓主。",
        "from": "X69n1351_001:0294b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照用一時行。",
        "from": "X69n1351_001:0294b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要會箇中意。",
        "from": "X69n1351_001:0294b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日午打三更。",
        "from": "X69n1351_001:0294b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廬山出來道。",
        "from": "X69n1351_001:0294b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝兩個漢。",
        "from": "X69n1351_001:0294b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正在葛藤窠裡。",
        "from": "X69n1351_001:0294b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見道。",
        "from": "X69n1351_001:0294b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得不招無間業。",
        "from": "X69n1351_001:0294b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫謗如來正法輪。",
        "from": "X69n1351_001:0294b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三個漢見解。",
        "from": "X69n1351_001:0294b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若上衲僧秤子上秤。",
        "from": "X69n1351_001:0294b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一個重八兩。",
        "from": "X69n1351_001:0294b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一箇重半觔。",
        "from": "X69n1351_001:0294b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一個不值半文錢。",
        "from": "X69n1351_001:0294b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道。",
        "from": "X69n1351_001:0294b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那個不值半文錢。",
        "from": "X69n1351_001:0294b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但願春風齊著力。",
        "from": "X69n1351_001:0294b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時吹入我門來。",
        "from": "X69n1351_001:0294b23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示眾云。",
        "from": "X69n1351_001:0294c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛身充滿於法界。",
        "from": "X69n1351_001:0294c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普現一切羣生前。",
        "from": "X69n1351_001:0294c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣赴感靡不周。",
        "from": "X69n1351_001:0294c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而常處此菩提座。",
        "from": "X69n1351_001:0294c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾。",
        "from": "X69n1351_001:0294c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作麼生說個隨緣赴感底道理。",
        "from": "X69n1351_001:0294c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇於一彈指間。",
        "from": "X69n1351_001:0294c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡大地含生根機。",
        "from": "X69n1351_001:0294c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時應得周足。",
        "from": "X69n1351_001:0294c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而未甞動著一毫頭。",
        "from": "X69n1351_001:0294c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便且喚作隨緣赴感而常處此座。",
        "from": "X69n1351_001:0294c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇如山僧此者。",
        "from": "X69n1351_001:0294c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受法華請。",
        "from": "X69n1351_001:0294c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相次與大眾相別。",
        "from": "X69n1351_001:0294c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去宿松縣裡。",
        "from": "X69n1351_001:0294c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開堂了。",
        "from": "X69n1351_001:0294c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方歸院去。",
        "from": "X69n1351_001:0294c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道。",
        "from": "X69n1351_001:0294c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還離此座也無。",
        "from": "X69n1351_001:0294c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若道離。",
        "from": "X69n1351_001:0294c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則世諦流布。",
        "from": "X69n1351_001:0294c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若道不離。",
        "from": "X69n1351_001:0294c07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作麼生見得個不離底事。",
        "from": "X69n1351_001:0294c07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫是無邊剎境。",
        "from": "X69n1351_001:0294c08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他不隔於毫端。",
        "from": "X69n1351_001:0294c08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十世古今。",
        "from": "X69n1351_001:0294c08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始終不離於當念麼。",
        "from": "X69n1351_001:0294c09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又莫是一切無心一時自遍麼。",
        "from": "X69n1351_001:0294c09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若恁麼。",
        "from": "X69n1351_001:0294c10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正是掉棒打月。",
        "from": "X69n1351_001:0294c10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到者裏。",
        "from": "X69n1351_001:0294c10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直須悟始得。",
        "from": "X69n1351_001:0294c10_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟後更須遇人始得。",
        "from": "X69n1351_001:0294c10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝道既悟了便休。",
        "from": "X69n1351_001:0294c11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又何必更須遇人。",
        "from": "X69n1351_001:0294c11_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若悟了遇人底。",
        "from": "X69n1351_001:0294c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當垂手方便之時。",
        "from": "X69n1351_001:0294c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著著自有出身之路。",
        "from": "X69n1351_001:0294c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不瞎却學者眼。",
        "from": "X69n1351_001:0294c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若祇悟得乾蘿蔔頭底。",
        "from": "X69n1351_001:0294c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不唯瞎却學者眼。",
        "from": "X69n1351_001:0294c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼自已動便先自犯鋒傷手。",
        "from": "X69n1351_001:0294c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝看。",
        "from": "X69n1351_001:0294c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我楊岐先師。",
        "from": "X69n1351_001:0294c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問慈明師翁道。",
        "from": "X69n1351_001:0294c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幽鳥語喃喃。",
        "from": "X69n1351_001:0294c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭雲入亂峰時如何。",
        "from": "X69n1351_001:0294c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答云。",
        "from": "X69n1351_001:0294c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我行荒草裡。",
        "from": "X69n1351_001:0294c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝又入深村。",
        "from": "X69n1351_001:0294c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進云。",
        "from": "X69n1351_001:0294c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官不容針。",
        "from": "X69n1351_001:0294c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更借一問。",
        "from": "X69n1351_001:0294c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師翁便喝。",
        "from": "X69n1351_001:0294c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進云。",
        "from": "X69n1351_001:0294c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好喝。",
        "from": "X69n1351_001:0294c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師翁又喝。",
        "from": "X69n1351_001:0294c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先師亦喝。",
        "from": "X69n1351_001:0294c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師翁乃連喝兩喝。",
        "from": "X69n1351_001:0294c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先師遂禮拜。",
        "from": "X69n1351_001:0294c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾須知。",
        "from": "X69n1351_001:0294c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟了遇人者。",
        "from": "X69n1351_001:0294c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向十字街頭。",
        "from": "X69n1351_001:0294c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與人相逢。",
        "from": "X69n1351_001:0294c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却在千峰頂上握手。",
        "from": "X69n1351_001:0294c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向千峰頂上相逢。",
        "from": "X69n1351_001:0294c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却在十字街頭握手。",
        "from": "X69n1351_001:0294c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以山僧甞有頌云。",
        "from": "X69n1351_001:0294c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他人住處我不住。",
        "from": "X69n1351_001:0294c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他人行處我不行。",
        "from": "X69n1351_001:0294c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是與人難共聚。",
        "from": "X69n1351_001:0294c21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大都緇素要分明。",
        "from": "X69n1351_001:0294c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧此者臨行。",
        "from": "X69n1351_001:0294c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解開布袋頭。",
        "from": "X69n1351_001:0294c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時撒在諸人面前了也。",
        "from": "X69n1351_001:0294c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有眼者。",
        "from": "X69n1351_001:0294c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫錯怪好。",
        "from": "X69n1351_001:0294c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珍重。",
        "from": "X69n1351_001:0294c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示眾云。",
        "from": "X69n1351_001:0294c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泥佛不度水。",
        "from": "X69n1351_001:0294c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木佛不度火。",
        "from": "X69n1351_001:0294c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金佛不度爐。",
        "from": "X69n1351_001:0294c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真佛內裏坐。",
        "from": "X69n1351_001:0294c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾。",
        "from": "X69n1351_001:0295a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州老子。",
        "from": "X69n1351_001:0295a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二劑骨頭。",
        "from": "X69n1351_001:0295a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬四千毛孔。",
        "from": "X69n1351_001:0295a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時拋向諸人懷裡了也。",
        "from": "X69n1351_001:0295a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓通今日路見不平。",
        "from": "X69n1351_001:0295a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為古人出氣。",
        "from": "X69n1351_001:0295a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手拍禪床云。",
        "from": "X69n1351_001:0295a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知海嶽歸明主。",
        "from": "X69n1351_001:0295a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未信乾坤陷吉人。",
        "from": "X69n1351_001:0295a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師。",
        "from": "X69n1351_001:0295a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓葛氏。",
        "from": "X69n1351_001:0295a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衡陽人。",
        "from": "X69n1351_001:0295a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼事翰墨。",
        "from": "X69n1351_001:0295a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及冠。",
        "from": "X69n1351_001:0295a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依茶陵郁禪師披削。",
        "from": "X69n1351_001:0295a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往參楊岐。",
        "from": "X69n1351_001:0295a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岐一日忽問。",
        "from": "X69n1351_001:0295a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受業師為誰。",
        "from": "X69n1351_001:0295a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X69n1351_001:0295a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茶陵郁和尚。",
        "from": "X69n1351_001:0295a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岐曰。",
        "from": "X69n1351_001:0295a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾聞。",
        "from": "X69n1351_001:0295a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊過橋遭攧有省。",
        "from": "X69n1351_001:0295a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈甚奇。",
        "from": "X69n1351_001:0295a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能記否。",
        "from": "X69n1351_001:0295a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師誦曰。",
        "from": "X69n1351_001:0295a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有明珠一顆。",
        "from": "X69n1351_001:0295a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久被塵勞關鎻。",
        "from": "X69n1351_001:0295a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今朝塵盡光生。",
        "from": "X69n1351_001:0295a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照破山河萬朵。",
        "from": "X69n1351_001:0295a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岐笑而趨起。",
        "from": "X69n1351_001:0295a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師愕然。",
        "from": "X69n1351_001:0295a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通夕不寐。",
        "from": "X69n1351_001:0295a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黎明咨訽之。",
        "from": "X69n1351_001:0295a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適歲暮。",
        "from": "X69n1351_001:0295a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岐曰。",
        "from": "X69n1351_001:0295a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝見昨日打敺儺者麼。",
        "from": "X69n1351_001:0295a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰見。",
        "from": "X69n1351_001:0295a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岐曰。",
        "from": "X69n1351_001:0295a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝一籌不及渠。",
        "from": "X69n1351_001:0295a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師復駭曰。",
        "from": "X69n1351_001:0295a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意旨如何。",
        "from": "X69n1351_001:0295a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岐曰。",
        "from": "X69n1351_001:0295a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渠愛人笑。",
        "from": "X69n1351_001:0295a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝怕人笑。",
        "from": "X69n1351_001:0295a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師大悟。",
        "from": "X69n1351_001:0295a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巾侍久之。",
        "from": "X69n1351_001:0295a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭遊廬阜。",
        "from": "X69n1351_001:0295a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓通訥禪師。",
        "from": "X69n1351_001:0295a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉住承天。",
        "from": "X69n1351_001:0295a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲名籍甚。",
        "from": "X69n1351_001:0295a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又遜居圓通。",
        "from": "X69n1351_001:0295a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次徙法華龍門興化海會。",
        "from": "X69n1351_001:0295a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所至眾如雲集。",
        "from": "X69n1351_001:0295a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧問。",
        "from": "X69n1351_001:0295a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是佛法大意。",
        "from": "X69n1351_001:0295a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X69n1351_001:0295a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水底按葫蘆。",
        "from": "X69n1351_001:0295a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又僧問。",
        "from": "X69n1351_001:0295a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求諸聖。",
        "from": "X69n1351_001:0295a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不重己靈。",
        "from": "X69n1351_001:0295a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未是衲僧分上事。",
        "from": "X69n1351_001:0295a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是衲僧分上事。",
        "from": "X69n1351_001:0295a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X69n1351_001:0295a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死水不藏龍。",
        "from": "X69n1351_001:0295a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X69n1351_001:0295a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便恁麼去時如何。",
        "from": "X69n1351_001:0295a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X69n1351_001:0295a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賺殺汝。",
        "from": "X69n1351_001:0295a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋仁宗熈寧五年丙戌示寂。",
        "from": "X69n1351_001:0295a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世壽四十八。",
        "from": "X69n1351_001:0295a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贊",
        "from": "X69n1351_001:0295a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楊岐和尚",
        "from": "X69n1351_001:0295a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碧海中珠。",
        "from": "X69n1351_001:0295a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爛泥裏刺。",
        "from": "X69n1351_001:0295a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎嘯龍唫。",
        "from": "X69n1351_001:0295a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雞啼犬吠。",
        "from": "X69n1351_001:0295a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下楊岐。",
        "from": "X69n1351_001:0295a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "討甚巴鼻。",
        "from": "X69n1351_001:0295a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衡州茶陵受業和尚",
        "from": "X69n1351_001:0295a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水月以喻兮古來已多。",
        "from": "X69n1351_001:0295a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今不然兮所陳伊何。",
        "from": "X69n1351_001:0295a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百尺竿頭曾進步。",
        "from": "X69n1351_001:0295a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溪橋一踏沒山河。",
        "from": "X69n1351_001:0295b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固不方遊兮何遊之有。",
        "from": "X69n1351_001:0295b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄沙保壽兮師其與偶。",
        "from": "X69n1351_001:0295b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雁峰之東兮洣川之口。",
        "from": "X69n1351_001:0295b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十三秋兮大獅子吼。",
        "from": "X69n1351_001:0295b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒兮卷兮已而矣。",
        "from": "X69n1351_001:0295b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依前空瀉洣川水。",
        "from": "X69n1351_001:0295b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九江相去幾千里。",
        "from": "X69n1351_001:0295b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父有重牙子無齒。",
        "from": "X69n1351_001:0295b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謾勞提耳一爐香。",
        "from": "X69n1351_001:0295b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微煙旋逐松風起。",
        "from": "X69n1351_001:0295b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題雲葢會和尚遺塔",
        "from": "X69n1351_001:0295b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五峰諸祖塔。",
        "from": "X69n1351_001:0295b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我祖據中央。",
        "from": "X69n1351_001:0295b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山脉朝來正。",
        "from": "X69n1351_001:0295b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溪光瀉去長。",
        "from": "X69n1351_001:0295b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧移雲際樹。",
        "from": "X69n1351_001:0295b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "客獻海邊香。",
        "from": "X69n1351_001:0295b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此瀟湘畔。",
        "from": "X69n1351_001:0295b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺風振洛陽。",
        "from": "X69n1351_001:0295b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白雲守端禪師語錄卷上",
        "from": "X69n1351_001:0295b10_0",
        "context_with_next_sentence": false
    }
]