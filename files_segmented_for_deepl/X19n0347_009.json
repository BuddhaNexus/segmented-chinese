    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0568c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是文殊師利問維摩詰。",
        "from": "X19n0347_009:0568c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等各自說已。",
        "from": "X19n0347_009:0568c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者當說。",
        "from": "X19n0347_009:0568c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等是菩薩入不二法門。",
        "from": "X19n0347_009:0568c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時維摩詰。",
        "from": "X19n0347_009:0569a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默然無言。",
        "from": "X19n0347_009:0569a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利歎曰善哉善哉。",
        "from": "X19n0347_009:0569a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無有文字語言。",
        "from": "X19n0347_009:0569a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真入不二法門。",
        "from": "X19n0347_009:0569a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是入不二法門品時。",
        "from": "X19n0347_009:0569a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此眾中五千菩薩。",
        "from": "X19n0347_009:0569a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆",
        "from": "X19n0347_009:0569a03_2",
        "context_with_next_sentence": false
    }
]