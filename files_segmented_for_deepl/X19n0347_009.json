[
    {
        "source_sentence": "維摩詰所說經卷九",
        "from": "X19n0347_009:0567b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入不二法門品",
        "from": "X19n0347_009:0567b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時維摩詰。",
        "from": "X19n0347_009:0567b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂眾菩薩言。",
        "from": "X19n0347_009:0567b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸仁者。",
        "from": "X19n0347_009:0567b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩。",
        "from": "X19n0347_009:0567b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入不二法門。",
        "from": "X19n0347_009:0567b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各隨所樂說之。",
        "from": "X19n0347_009:0567b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會中有菩薩名法自在。",
        "from": "X19n0347_009:0567b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說言諸仁者。",
        "from": "X19n0347_009:0567b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅為二。",
        "from": "X19n0347_009:0567b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法本不生。",
        "from": "X19n0347_009:0567b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則無滅。",
        "from": "X19n0347_009:0567b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此無生法忍。",
        "from": "X19n0347_009:0567b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德守菩薩曰。",
        "from": "X19n0347_009:0567b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我我所為二。",
        "from": "X19n0347_009:0567b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因有我故。",
        "from": "X19n0347_009:0567b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便有我所。",
        "from": "X19n0347_009:0567b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無有我。",
        "from": "X19n0347_009:0567b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無我所。",
        "from": "X19n0347_009:0567b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不眴菩薩曰。",
        "from": "X19n0347_009:0567b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受不受為二。",
        "from": "X19n0347_009:0567b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法不受。",
        "from": "X19n0347_009:0567b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不可得。",
        "from": "X19n0347_009:0567b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不可得故。",
        "from": "X19n0347_009:0567b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無取無捨。",
        "from": "X19n0347_009:0567b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無作無行。",
        "from": "X19n0347_009:0567b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德頂菩薩曰。",
        "from": "X19n0347_009:0567b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢淨為二。",
        "from": "X19n0347_009:0567b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見垢實性則無淨相。",
        "from": "X19n0347_009:0567b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順於滅相。",
        "from": "X19n0347_009:0567b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善宿菩薩曰。",
        "from": "X19n0347_009:0567b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是動是念為二。",
        "from": "X19n0347_009:0567b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動則無念。",
        "from": "X19n0347_009:0567b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無念即無分別。",
        "from": "X19n0347_009:0567b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達此者。",
        "from": "X19n0347_009:0567b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善眼菩薩曰。",
        "from": "X19n0347_009:0567b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一相無相為二。",
        "from": "X19n0347_009:0567b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知一相即是無相。",
        "from": "X19n0347_009:0567b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不取無相。",
        "from": "X19n0347_009:0567b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入於平等。",
        "from": "X19n0347_009:0567b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙臂菩薩曰。",
        "from": "X19n0347_009:0567b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩心聲聞心為二。",
        "from": "X19n0347_009:0567b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀心相空如幻化者。",
        "from": "X19n0347_009:0567b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無菩薩心。",
        "from": "X19n0347_009:0567b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無聲聞心。",
        "from": "X19n0347_009:0567b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門弗沙菩薩曰。",
        "from": "X19n0347_009:0567b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善不善為二。",
        "from": "X19n0347_009:0567b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不起善不善。",
        "from": "X19n0347_009:0567b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入無相際而通達者。",
        "from": "X19n0347_009:0567b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子菩薩曰。",
        "from": "X19n0347_009:0567c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪福為二。",
        "from": "X19n0347_009:0567c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若達罪性則與福無異。",
        "from": "X19n0347_009:0567c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛慧。",
        "from": "X19n0347_009:0567c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決了此相。",
        "from": "X19n0347_009:0567c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無縛無解者。",
        "from": "X19n0347_009:0567c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子意菩薩曰。",
        "from": "X19n0347_009:0567c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有漏無漏為二。",
        "from": "X19n0347_009:0567c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得諸法等則不起漏不漏想。",
        "from": "X19n0347_009:0567c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著於相。",
        "from": "X19n0347_009:0567c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不住無相。",
        "from": "X19n0347_009:0567c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨解菩薩曰。",
        "from": "X19n0347_009:0567c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有為無為為二。",
        "from": "X19n0347_009:0567c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離一切數則心如虗空。",
        "from": "X19n0347_009:0567c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨慧無所礙者。",
        "from": "X19n0347_009:0567c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門那羅延菩薩曰。",
        "from": "X19n0347_009:0567c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間出世間為二。",
        "from": "X19n0347_009:0567c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間性空即是出世間。",
        "from": "X19n0347_009:0567c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中不入不出不溢不散。",
        "from": "X19n0347_009:0567c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善意菩薩曰。",
        "from": "X19n0347_009:0567c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死涅槃為二。",
        "from": "X19n0347_009:0567c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見生死性則無生死。",
        "from": "X19n0347_009:0567c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無縛無解。",
        "from": "X19n0347_009:0567c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不然不滅。",
        "from": "X19n0347_009:0567c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是解者。",
        "from": "X19n0347_009:0567c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現見菩薩曰。",
        "from": "X19n0347_009:0567c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡不盡為二。",
        "from": "X19n0347_009:0567c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法若究竟盡若不盡。",
        "from": "X19n0347_009:0567c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是無盡相。",
        "from": "X19n0347_009:0567c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡相即是空。",
        "from": "X19n0347_009:0567c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空則無有盡不盡相。",
        "from": "X19n0347_009:0567c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是入者。",
        "from": "X19n0347_009:0567c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0567c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普守菩薩曰。",
        "from": "X19n0347_009:0568a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無我為二。",
        "from": "X19n0347_009:0568a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不可得。",
        "from": "X19n0347_009:0568a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我何可得。",
        "from": "X19n0347_009:0568a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見我實性者不復起二。",
        "from": "X19n0347_009:0568a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門電天菩薩曰。",
        "from": "X19n0347_009:0568a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明無明為二。",
        "from": "X19n0347_009:0568a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明實性即是明。",
        "from": "X19n0347_009:0568a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明亦不可取。",
        "from": "X19n0347_009:0568a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離一切數。",
        "from": "X19n0347_009:0568a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中平等無二者。",
        "from": "X19n0347_009:0568a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0568a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜見菩薩曰。",
        "from": "X19n0347_009:0568a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色色空為二。",
        "from": "X19n0347_009:0568a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色即是空。",
        "from": "X19n0347_009:0568a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色滅空。",
        "from": "X19n0347_009:0568a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色性自空。",
        "from": "X19n0347_009:0568a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是受想行識。",
        "from": "X19n0347_009:0568a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識空為二。",
        "from": "X19n0347_009:0568a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識即是空。",
        "from": "X19n0347_009:0568a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非識滅空。",
        "from": "X19n0347_009:0568a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識性自空。",
        "from": "X19n0347_009:0568a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中而通。",
        "from": "X19n0347_009:0568a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達者。",
        "from": "X19n0347_009:0568a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0568a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明相菩薩曰。",
        "from": "X19n0347_009:0568a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種異空種異為二。",
        "from": "X19n0347_009:0568a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種性即是空種性。",
        "from": "X19n0347_009:0568a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前際後際空故中際亦空。",
        "from": "X19n0347_009:0568a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如是知諸種性者。",
        "from": "X19n0347_009:0568a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為入不二法門。",
        "from": "X19n0347_009:0568a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙意菩薩曰。",
        "from": "X19n0347_009:0568a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼色為二。",
        "from": "X19n0347_009:0568a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知眼性於色不貪不恚不癡。",
        "from": "X19n0347_009:0568a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名寂滅。",
        "from": "X19n0347_009:0568a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是耳聲。",
        "from": "X19n0347_009:0568a14_4",
        "context_with_next_sentence": true
    },
    {
