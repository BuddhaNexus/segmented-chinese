[
    {
        "source_sentence": "居士傳四",
        "from": "X88n1646_004:0189b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安陽董何魏陳劉傳",
        "from": "X88n1646_004:0189b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安陽沮渠侯京聲者。",
        "from": "X88n1646_004:0189b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天水臨城縣人。",
        "from": "X88n1646_004:0189b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河西王蒙遜之從弟也。",
        "from": "X88n1646_004:0189b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人疎通彊識。",
        "from": "X88n1646_004:0189b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼稟五戒銳意內典。",
        "from": "X88n1646_004:0189b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少時甞到于闐國。",
        "from": "X88n1646_004:0189b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經衢摩帝太寺。",
        "from": "X88n1646_004:0189b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇天竺法師佛陀斯陀。",
        "from": "X88n1646_004:0189b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咨問道義從受禪要秘密治病經。",
        "from": "X88n1646_004:0189b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而東歸高昌。",
        "from": "X88n1646_004:0189b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求得觀世音．彌勒二觀經各一卷。",
        "from": "X88n1646_004:0189b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及還河西。",
        "from": "X88n1646_004:0189c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即譯出禪要。",
        "from": "X88n1646_004:0189c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居數年。",
        "from": "X88n1646_004:0189c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魏主燾破河西。",
        "from": "X88n1646_004:0189c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安陽奔宋。",
        "from": "X88n1646_004:0189c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晦志卑身不交世務。",
        "from": "X88n1646_004:0189c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常遊止塔寺。",
        "from": "X88n1646_004:0189c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初出觀世音彌勒二觀經。",
        "from": "X88n1646_004:0189c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丹陽尹孟顗見而善之。",
        "from": "X88n1646_004:0189c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請與相見。",
        "from": "X88n1646_004:0189c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厚設供養。",
        "from": "X88n1646_004:0189c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至孝建二年。",
        "from": "X88n1646_004:0189c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘尼慧濬聞其諷禪經。",
        "from": "X88n1646_004:0189c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請得傳寫。",
        "from": "X88n1646_004:0189c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂出為五卷。",
        "from": "X88n1646_004:0189c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其年於鍾山定林寺續出佛母泥洹經一卷。",
        "from": "X88n1646_004:0189c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安陽居絕妻拏。",
        "from": "X88n1646_004:0189c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不樂榮利。",
        "from": "X88n1646_004:0189c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從容法侶宣通經典。",
        "from": "X88n1646_004:0189c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以緇白交敬禮焉。",
        "from": "X88n1646_004:0189c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明末遘疾而卒(出三藏記集)。",
        "from": "X88n1646_004:0189c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "董吉於潛人也。",
        "from": "X88n1646_004:0189c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉法三世。",
        "from": "X88n1646_004:0189c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至吉尤精進。",
        "from": "X88n1646_004:0189c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒齋戒誦首楞嚴經。",
        "from": "X88n1646_004:0189c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所居村人有疾病。",
        "from": "X88n1646_004:0189c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請吉誦經輙愈。",
        "from": "X88n1646_004:0189c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同縣何晃亦奉法。",
        "from": "X88n1646_004:0189c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒中毒。",
        "from": "X88n1646_004:0189c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請吉往會。",
        "from": "X88n1646_004:0189c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溪水暴漲不得度。",
        "from": "X88n1646_004:0189c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉默禱於大士。",
        "from": "X88n1646_004:0189c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裸而戴囊經以度。",
        "from": "X88n1646_004:0189c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及岸忽囊經為水漂沒。",
        "from": "X88n1646_004:0189c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚悲恨。",
        "from": "X88n1646_004:0189c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至晃家懺悔自責。",
        "from": "X88n1646_004:0189c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俛仰之間乃見經囊在高座上。",
        "from": "X88n1646_004:0189c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟視之。",
        "from": "X88n1646_004:0189c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞沾濕。",
        "from": "X88n1646_004:0189c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是縣人一時皆奉法。",
        "from": "X88n1646_004:0189c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉家西北有山高險。",
        "from": "X88n1646_004:0189c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中多妖魅犯害居民。",
        "from": "X88n1646_004:0189c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉欲降之。",
        "from": "X88n1646_004:0189c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃闢山地四五畆。",
        "from": "X88n1646_004:0189c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "構造小屋。",
        "from": "X88n1646_004:0189c16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設高座。",
        "from": "X88n1646_004:0189c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉首楞嚴經百餘日。",
        "from": "X88n1646_004:0189c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民害遂止。",
        "from": "X88n1646_004:0189c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後有數人來謁曰。",
        "from": "X88n1646_004:0189c17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞君德行清肅。",
        "from": "X88n1646_004:0189c17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故來相觀。",
        "from": "X88n1646_004:0189c17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并請一事。",
        "from": "X88n1646_004:0189c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想當見聽。",
        "from": "X88n1646_004:0189c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾世有此山。",
        "from": "X88n1646_004:0189c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今君來止。",
        "from": "X88n1646_004:0189c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慮相犯冒。",
        "from": "X88n1646_004:0189c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當更作界分。",
        "from": "X88n1646_004:0189c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以殺樹為斷。",
        "from": "X88n1646_004:0189c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉知是山鬼。",
        "from": "X88n1646_004:0189c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃曰。",
        "from": "X88n1646_004:0189c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僕貪此寂靜。",
        "from": "X88n1646_004:0189c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦經典。",
        "from": "X88n1646_004:0189c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不干君等。",
        "from": "X88n1646_004:0189c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願見祐助。",
        "from": "X88n1646_004:0189c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼許諾而去。",
        "from": "X88n1646_004:0189c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越一宿。",
        "from": "X88n1646_004:0189c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自吉所闢地四際之外。",
        "from": "X88n1646_004:0189c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹皆枯死如焚焉(冥祥記)。",
        "from": "X88n1646_004:0189c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何曇遠廬江人。",
        "from": "X88n1646_004:0189c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋御史中丞萬壽之子也。",
        "from": "X88n1646_004:0189c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少奉法持菩薩戒。",
        "from": "X88n1646_004:0189c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十八居父喪。",
        "from": "X88n1646_004:0189c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀毀成疾。",
        "from": "X88n1646_004:0189c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂歸心淨土。",
        "from": "X88n1646_004:0189c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請僧數人於家懺悔宿業。",
        "from": "X88n1646_004:0189c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久而益虔。",
        "from": "X88n1646_004:0190a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕轉經竟。",
        "from": "X88n1646_004:0190a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾僧已眠。",
        "from": "X88n1646_004:0190a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇遠忽自歌誦。",
        "from": "X88n1646_004:0190a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧異而問之。",
        "from": "X88n1646_004:0190a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X88n1646_004:0190a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見佛身黃金色。",
        "from": "X88n1646_004:0190a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光丈餘。",
        "from": "X88n1646_004:0190a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自西而至。",
        "from": "X88n1646_004:0190a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幡花翼從。",
        "from": "X88n1646_004:0190a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充滿虗空。",
        "from": "X88n1646_004:0190a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛熈怡微笑詔曇遠速去。",
        "from": "X88n1646_004:0190a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇遠素羸弱。",
        "from": "X88n1646_004:0190a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至是神色壯厲。",
        "from": "X88n1646_004:0190a04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便取香花散之空中。",
        "from": "X88n1646_004:0190a04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至五更忽然而終。",
        "from": "X88n1646_004:0190a05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宅中芬香數日乃歇(冥祥記)。",
        "from": "X88n1646_004:0190a05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魏世子梁郡人。",
        "from": "X88n1646_004:0190a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生當宋世。",
        "from": "X88n1646_004:0190a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉佛精進。",
        "from": "X88n1646_004:0190a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率諸子女修西方淨業。",
        "from": "X88n1646_004:0190a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯婦獨不信。",
        "from": "X88n1646_004:0190a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其女病死七日復蘇。",
        "from": "X88n1646_004:0190a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即升高座誦無量壽經。",
        "from": "X88n1646_004:0190a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下啟父言。",
        "from": "X88n1646_004:0190a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒去便往無量壽國。",
        "from": "X88n1646_004:0190a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒及父兄池中各有大蓮華。",
        "from": "X88n1646_004:0190a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生其內。",
        "from": "X88n1646_004:0190a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯母獨無。",
        "from": "X88n1646_004:0190a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不勝此悲。",
        "from": "X88n1646_004:0190a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故歸啟報。",
        "from": "X88n1646_004:0190a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語竟而瞑。",
        "from": "X88n1646_004:0190a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母自是亦奉法焉(冥祥記)。",
        "from": "X88n1646_004:0190a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳參軍名鍼。",
        "from": "X88n1646_004:0190a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊州華容人。",
        "from": "X88n1646_004:0190a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台智者禪師之兄也。",
        "from": "X88n1646_004:0190a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仕梁為普安王中兵參軍。",
        "from": "X88n1646_004:0190a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年四十遇仙人張果謂之曰。",
        "from": "X88n1646_004:0190a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾觀汝相。",
        "from": "X88n1646_004:0190a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陽筭已盡。",
        "from": "X88n1646_004:0190a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死在朞月。",
        "from": "X88n1646_004:0190a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參軍懼以白智者。",
        "from": "X88n1646_004:0190a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者授以童蒙止觀。",
        "from": "X88n1646_004:0190a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教行方等懺法。",
        "from": "X88n1646_004:0190a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先具十法。",
        "from": "X88n1646_004:0190a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者明信因果。",
        "from": "X88n1646_004:0190a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者生重怖畏。",
        "from": "X88n1646_004:0190a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者深起慚愧。",
        "from": "X88n1646_004:0190a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者求滅罪方法。",
        "from": "X88n1646_004:0190a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂大乘經中明諸行法。",
        "from": "X88n1646_004:0190a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當如法修行。",
        "from": "X88n1646_004:0190a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者發露先罪。",
        "from": "X88n1646_004:0190a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者斷相續心。",
        "from": "X88n1646_004:0190a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者起護法心。",
        "from": "X88n1646_004:0190a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者發大誓願度脫眾生。",
        "from": "X88n1646_004:0190a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者常念十方諸佛。",
        "from": "X88n1646_004:0190a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者觀罪性無生。",
        "from": "X88n1646_004:0190a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具此十法莊嚴道場。",
        "from": "X88n1646_004:0190a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著潔淨衣燒香散華。",
        "from": "X88n1646_004:0190a19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三寶前如法修行。",
        "from": "X88n1646_004:0190a19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一七三七一月三月。",
        "from": "X88n1646_004:0190a20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至經年專心懺悔。",
        "from": "X88n1646_004:0190a20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得重罪消滅禪定現前。",
        "from": "X88n1646_004:0190a21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參軍奉教修習夙夜不怠。",
        "from": "X88n1646_004:0190a21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未及一載復見果。",
        "from": "X88n1646_004:0190a22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果大驚異曰服何藥而致此。",
        "from": "X88n1646_004:0190a22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰但修懺法未甞服食。",
        "from": "X88n1646_004:0190a22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果以手加額曰。",
        "from": "X88n1646_004:0190a23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉道力。",
        "from": "X88n1646_004:0190a23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越死超生。",
        "from": "X88n1646_004:0190a23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後參軍於禪定中升天宮見金殿。",
        "from": "X88n1646_004:0190a24_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "榜曰陳鍼之室。",
        "from": "X88n1646_004:0190a24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十五年當生於此。",
        "from": "X88n1646_004:0190b01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期。",
        "from": "X88n1646_004:0190b01_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧謁親知言別。",
        "from": "X88n1646_004:0190b01_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐而逝(佛祖統記．小止觀)。",
        "from": "X88n1646_004:0190b01_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉謙之魏孝文帝時中官也。",
        "from": "X88n1646_004:0190b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太和中自傷刑餘。",
        "from": "X88n1646_004:0190b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏乞入山修道。",
        "from": "X88n1646_004:0190b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齎華嚴經一部。",
        "from": "X88n1646_004:0190b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜禮誦。",
        "from": "X88n1646_004:0190b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕粒飲水。",
        "from": "X88n1646_004:0190b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經三七日忽髯髭盡生。",
        "from": "X88n1646_004:0190b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復丈夫相。",
        "from": "X88n1646_004:0190b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神思通悟洞曉幽旨。",
        "from": "X88n1646_004:0190b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂殫精造華嚴經論共六百卷。",
        "from": "X88n1646_004:0190b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏聞孝文。",
        "from": "X88n1646_004:0190b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍加敬信。",
        "from": "X88n1646_004:0190b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴一教遂盛於時(大唐內典錄．華嚴經疏鈔○疏鈔以謙之為北齊人。",
        "from": "X88n1646_004:0190b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言感第三王子焚身供養文殊事。",
        "from": "X88n1646_004:0190b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因而發心。",
        "from": "X88n1646_004:0190b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按北齊無太和年號。",
        "from": "X88n1646_004:0190b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且魏齊諸王子盡列於史。",
        "from": "X88n1646_004:0190b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並無焚身事。",
        "from": "X88n1646_004:0190b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今據內典錄削之)。",
        "from": "X88n1646_004:0190b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴恭泉州人也。",
        "from": "X88n1646_004:0190b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋開皇中客於揚州。",
        "from": "X88n1646_004:0190b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造精舍。",
        "from": "X88n1646_004:0190b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫法華經。",
        "from": "X88n1646_004:0190b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道俗崇敬常送錢供給。",
        "from": "X88n1646_004:0190b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後有人從貸經錢一萬。",
        "from": "X88n1646_004:0190b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭不獲已與之。",
        "from": "X88n1646_004:0190b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貸者載至中路。",
        "from": "X88n1646_004:0190b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "船覆失錢。",
        "from": "X88n1646_004:0190b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是日恭入庫。",
        "from": "X88n1646_004:0190b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一萬錢如新出水。",
        "from": "X88n1646_004:0190b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怪之。",
        "from": "X88n1646_004:0190b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而其人以船覆告。",
        "from": "X88n1646_004:0190b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃知庫中錢即其所貸也。",
        "from": "X88n1646_004:0190b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一商人至衖亭湖祭神。",
        "from": "X88n1646_004:0190b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜夢神云。",
        "from": "X88n1646_004:0190b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸君以所贈物與嚴法華為書經用也。",
        "from": "X88n1646_004:0190b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其他感應甚眾。",
        "from": "X88n1646_004:0190b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭遂以書經終。",
        "from": "X88n1646_004:0190b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大業末。",
        "from": "X88n1646_004:0190b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子孫猶傳其業。",
        "from": "X88n1646_004:0190b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群盜相約不入其里。",
        "from": "X88n1646_004:0190b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "里人賴之。",
        "from": "X88n1646_004:0190b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同時益州新繁有荀生者。",
        "from": "X88n1646_004:0190b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居縣西三十里許曰王李村。",
        "from": "X88n1646_004:0190b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "工書。",
        "from": "X88n1646_004:0190b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然自重不肯為人書。",
        "from": "X88n1646_004:0190b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人雖辱毆之。",
        "from": "X88n1646_004:0190b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不顧也。",
        "from": "X88n1646_004:0190b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日把筆走前村。",
        "from": "X88n1646_004:0190b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向空中四面書般若經。",
        "from": "X88n1646_004:0190b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數日而畢曰。",
        "from": "X88n1646_004:0190b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好令諸天讀之。",
        "from": "X88n1646_004:0190b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人初不覺其異。",
        "from": "X88n1646_004:0190b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後大雷雨。",
        "from": "X88n1646_004:0190b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牧牛小兒住其地中可丈許。",
        "from": "X88n1646_004:0190b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨不能濕。",
        "from": "X88n1646_004:0190b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自後遇雨牧兒輙避雨其處。",
        "from": "X88n1646_004:0190b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武德中有異僧語村人曰。",
        "from": "X88n1646_004:0190b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此地空中有般若經。",
        "from": "X88n1646_004:0190b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天於上設葢覆之。",
        "from": "X88n1646_004:0190b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可輕踐。",
        "from": "X88n1646_004:0190b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "村人遂以闌楯周之。",
        "from": "X88n1646_004:0190b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋日設供。",
        "from": "X88n1646_004:0190b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每聞天樂聲(冥報記．三寶感通記)。",
        "from": "X88n1646_004:0190b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_004:0190c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數君之奉法。",
        "from": "X88n1646_004:0190c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂專且勤矣。",
        "from": "X88n1646_004:0190c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其能格天人而度生死也。",
        "from": "X88n1646_004:0190c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜哉。",
        "from": "X88n1646_004:0190c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫陽氣奮而萌芽作。",
        "from": "X88n1646_004:0190c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秋風至而木",
        "from": "X88n1646_004:0190c02_6",
        "context_with_next_sentence": false
    }
]