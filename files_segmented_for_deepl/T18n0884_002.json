[
    {
        "source_sentence": "佛說祕密相經卷中",
        "from": "T18n0884_002:0465a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T18n0884_002:0465a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫沙門臣施護等",
        "from": "T18n0884_002:0465a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯",
        "from": "T18n0884_002:0465a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_002:0465a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白世尊大毘盧遮那如來言。",
        "from": "T18n0884_002:0465a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何是金剛杵。",
        "from": "T18n0884_002:0465a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復云何是蓮華。",
        "from": "T18n0884_002:0465a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_002:0465a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩摩訶薩言。",
        "from": "T18n0884_002:0465a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手一切如來安住之智即金剛杵。",
        "from": "T18n0884_002:0465a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本部賢聖和合相應是謂蓮華。",
        "from": "T18n0884_002:0465a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼金剛杵住於蓮華上。",
        "from": "T18n0884_002:0465a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是出生一切如來。",
        "from": "T18n0884_002:0465a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來身即毘盧遮那。",
        "from": "T18n0884_002:0465a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是作已。",
        "from": "T18n0884_002:0465a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃從金剛語言。",
        "from": "T18n0884_002:0465a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安布大明祕密文字。",
        "from": "T18n0884_002:0465a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂。",
        "from": "T18n0884_002:0465a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勃嚨(二合引)",
        "from": "T18n0884_002:0465a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字先於自心淨月曼拏羅中。",
        "from": "T18n0884_002:0465a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想安住已。",
        "from": "T18n0884_002:0465a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後想成大妙高山。",
        "from": "T18n0884_002:0465a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其山上想現是字。",
        "from": "T18n0884_002:0465a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字復成金剛寶峯廣大樓閣。",
        "from": "T18n0884_002:0465a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大摩尼寶所共莊嚴。",
        "from": "T18n0884_002:0465a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懸鈴珠寶繒幡瓔珞。",
        "from": "T18n0884_002:0465a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微風吹動出和雅音。",
        "from": "T18n0884_002:0465a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種殊妙校飾。",
        "from": "T18n0884_002:0465a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉祥勝上堪所稱讚。",
        "from": "T18n0884_002:0465a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼樓閣一切如來所共安住。",
        "from": "T18n0884_002:0465a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於樓閣中復想五股金剛杵輪。",
        "from": "T18n0884_002:0465b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣略相應。",
        "from": "T18n0884_002:0465b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想其杵復成金剛薩埵大士影像。",
        "from": "T18n0884_002:0465b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝相具足身如月色現光明而復安處月輪之上。",
        "from": "T18n0884_002:0465b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴五佛殊妙寶冠。",
        "from": "T18n0884_002:0465b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛相光焰鬘莊嚴。",
        "from": "T18n0884_002:0465b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右皆現高舉之相。",
        "from": "T18n0884_002:0465b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住諸法本來無性大三昧邪真實理中。",
        "from": "T18n0884_002:0465b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若情若器諸性自性。",
        "from": "T18n0884_002:0465b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是二種合為一相。",
        "from": "T18n0884_002:0465b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故觀想己身成就金剛薩埵。",
        "from": "T18n0884_002:0465b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T18n0884_002:0465b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此本尊等諸法用然後施作。",
        "from": "T18n0884_002:0465b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_002:0465b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於世尊大毘盧遮那如來前月曼拏羅中。",
        "from": "T18n0884_002:0465b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依止而住作是白言。",
        "from": "T18n0884_002:0465b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何是本尊。",
        "from": "T18n0884_002:0465b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_002:0465b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為金剛手菩薩摩訶薩。",
        "from": "T18n0884_002:0465b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第宣說本尊等法。",
        "from": "T18n0884_002:0465b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸修瑜伽行者。",
        "from": "T18n0884_002:0465b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當依法於自心月曼拏羅中。",
        "from": "T18n0884_002:0465b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想吽字。",
        "from": "T18n0884_002:0465b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是文字。",
        "from": "T18n0884_002:0465b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想出普門巧業眾相大金剛杵。",
        "from": "T18n0884_002:0465b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀時當結密印。",
        "from": "T18n0884_002:0465b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印先作金剛縛後。",
        "from": "T18n0884_002:0465b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散開諸指作攝入勢。",
        "from": "T18n0884_002:0465b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成印誦此本心大明曰。",
        "from": "T18n0884_002:0465b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)滿馱怛囉(二合)吒(一句)誦是大明結是印已。",
        "from": "T18n0884_002:0465b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃可結一切印。",
        "from": "T18n0884_002:0465b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及作本尊等法。",
        "from": "T18n0884_002:0465b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至金剛阿吠舍并鉤召等餘諸成就法。",
        "from": "T18n0884_002:0465b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自身語心金剛加持作用。",
        "from": "T18n0884_002:0465b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得敬愛成就。",
        "from": "T18n0884_002:0465b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃結金剛阿吠舍印。",
        "from": "T18n0884_002:0465b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦彼心明。",
        "from": "T18n0884_002:0465b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其明所謂。",
        "from": "T18n0884_002:0465b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡(入)",
        "from": "T18n0884_002:0465b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是心明。",
        "from": "T18n0884_002:0465b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍攝入本尊等法。",
        "from": "T18n0884_002:0465b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸餘成就之法。",
        "from": "T18n0884_002:0465b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得善友敬愛而住。",
        "from": "T18n0884_002:0465b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其金剛阿吠舍印者。",
        "from": "T18n0884_002:0465b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作金剛掌次作金剛縛。",
        "from": "T18n0884_002:0465b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後結金剛阿吠舍印。",
        "from": "T18n0884_002:0465b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛掌者堅實掌心諸指不縛。",
        "from": "T18n0884_002:0465b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復緊密成金剛掌。",
        "from": "T18n0884_002:0465b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即轉此掌善結其縛成金剛縛。",
        "from": "T18n0884_002:0465c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復開此縛作金剛拳二頭相並即成金剛阿吠舍三昧邪印。",
        "from": "T18n0884_002:0465c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後從自心中。",
        "from": "T18n0884_002:0465c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安想金剛薩埵文字之相。",
        "from": "T18n0884_002:0465c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想其字即成五股白色淨妙周匝光焰大金剛杵復次如前依法安想祕密文字。",
        "from": "T18n0884_002:0465c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃結薩埵金剛印。",
        "from": "T18n0884_002:0465c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當結印時。",
        "from": "T18n0884_002:0465c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當誦是心大明曰。",
        "from": "T18n0884_002:0465c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)三摩邪薩怛網(三合一句)其薩埵金剛印者謂以二手作圓月相。",
        "from": "T18n0884_002:0465c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指相離。",
        "from": "T18n0884_002:0465c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘指面相著。",
        "from": "T18n0884_002:0465c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛杵相成印。",
        "from": "T18n0884_002:0465c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結是印時誦此大明曰。",
        "from": "T18n0884_002:0465c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)底瑟姹(二合)嚩日囉(二合)捺哩(二合)除(引)彌(引)婆嚩(一句)蘇覩(引)沙踰(二合引)彌(引)婆嚩(二)阿努囉訖覩(二合引)彌(引)婆嚩(三)舍(引)說覩(引)彌(引)婆嚩(四)蘇布(引)沙踰(二合引)彌(引)婆嚩(五)紇哩(二合)捺煬彌(引)提底瑟吒(二合)(六)薩哩嚩(二合)悉提孕(二合)彌(引)鉢囉(二合)野蹉(七)薩哩嚩(二合)羯哩彌(二合引)數左(八)爾唧多室哩(二合引)野俱嚕吽(引)(九)訶訶訶訶呼(引)(十)如是大明即本尊法此中具有四禮敬印。",
        "from": "T18n0884_002:0465c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂心印誓誡心印。",
        "from": "T18n0884_002:0465c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘現前三昧心印。",
        "from": "T18n0884_002:0465c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙金剛智天眼智等五通心印。",
        "from": "T18n0884_002:0465c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸印門總攝如來堅固之性。",
        "from": "T18n0884_002:0465c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛加持離諸怖畏能成一切最上成就。",
        "from": "T18n0884_002:0465c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切適悅快樂諸正受等一切總持門等。",
        "from": "T18n0884_002:0465c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切如來真實性等。",
        "from": "T18n0884_002:0465c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總攝自心。",
        "from": "T18n0884_002:0465c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得安住金剛加持身語心業。",
        "from": "T18n0884_002:0465c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後取以繒帛而為其鬘。",
        "from": "T18n0884_002:0465c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安自頂上誦此心明曰。",
        "from": "T18n0884_002:0465c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉢囉(二合)帝(引)蹉嚩日囉(二合)呼(引一句)誦是心明而加持已。",
        "from": "T18n0884_002:0465c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於頂上作繫鬘相。",
        "from": "T18n0884_002:0465c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋覆其面。",
        "from": "T18n0884_002:0465c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當繫鬘時隨應法儀。",
        "from": "T18n0884_002:0466a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即阿闍梨為作是言。",
        "from": "T18n0884_002:0466a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今受是祕密心明。",
        "from": "T18n0884_002:0466a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即勇猛大力世尊本來無性之法。",
        "from": "T18n0884_002:0466a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿闍梨真實加持。",
        "from": "T18n0884_002:0466a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能善作一切事業。",
        "from": "T18n0884_002:0466a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即世尊大毘盧遮那如來所說。",
        "from": "T18n0884_002:0466a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸佛及執金剛等所共攝受。",
        "from": "T18n0884_002:0466a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授是言已除其繒帛。",
        "from": "T18n0884_002:0466a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此大明曰。",
        "from": "T18n0884_002:0466a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)薩埵莎煬帝(引)禰野(二合一句)作芻訥伽(二合引)吒那怛咄鉢(二合)囉(二)嗢訥伽(二合引)吒野底薩哩嚩(二合引)芻(引)(三)嚩日囉(二合)作芻囉努多囕(四)係(引)嚩日囉(二合)鉢舍(五)爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_002:0466a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於世尊大毘盧遮那如來右月曼拏羅中。",
        "from": "T18n0884_002:0466a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依止住已。",
        "from": "T18n0884_002:0466a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是伽陀伸讚歎曰。",
        "from": "T18n0884_002:0466a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　快哉一切正覺尊　　三摩地智無有上　所有一切諸眾生　　由斯二法得成佛金剛手菩薩摩訶薩作是讚已。",
        "from": "T18n0884_002:0466a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言世尊最初開目行相云何。",
        "from": "T18n0884_002:0466a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_002:0466a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩摩訶薩言。",
        "from": "T18n0884_002:0466a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手最初開目者。",
        "from": "T18n0884_002:0466a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於自身大曼拏羅。",
        "from": "T18n0884_002:0466a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如次觀視。",
        "from": "T18n0884_002:0466a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當其觀是曼拏羅時。",
        "from": "T18n0884_002:0466a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得一切如來威力加持。",
        "from": "T18n0884_002:0466a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛薩埵心中如理而住。",
        "from": "T18n0884_002:0466a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復得見種種光明勝曼拏羅。",
        "from": "T18n0884_002:0466a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復得覩廣大神通變化事等。",
        "from": "T18n0884_002:0466a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由得如來所加持故。",
        "from": "T18n0884_002:0466a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能見彼金剛手身。",
        "from": "T18n0884_002:0466a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復得見諸如來身。",
        "from": "T18n0884_002:0466a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中無動菩薩摩訶薩。",
        "from": "T18n0884_002:0466a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前詣世尊大毘盧遮那根本無性如來。",
        "from": "T18n0884_002:0466a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋繞已作是白言。",
        "from": "T18n0884_002:0466a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何是大曼拏羅。",
        "from": "T18n0884_002:0466a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於是中復云何行。",
        "from": "T18n0884_002:0466a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_002:0466a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告無動菩薩摩訶薩言。",
        "from": "T18n0884_002:0466a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大曼拏羅者。",
        "from": "T18n0884_002:0466b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂即觀自身曼拏羅。",
        "from": "T18n0884_002:0466b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T18n0884_002:0466b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取金剛加持清淨香水。",
        "from": "T18n0884_002:0466b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為灌頂誦是心明曰。",
        "from": "T18n0884_002:0466b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合引)毘詵左(一句)",
        "from": "T18n0884_002:0466b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結繫鬘印。",
        "from": "T18n0884_002:0466b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戴諸佛冠灌自心頂。",
        "from": "T18n0884_002:0466b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫鬘印者。",
        "from": "T18n0884_002:0466b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以二大指盤結於掌心。",
        "from": "T18n0884_002:0466b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後屈中指。",
        "from": "T18n0884_002:0466b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大指面合成印。",
        "from": "T18n0884_002:0466b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是如來部印。",
        "from": "T18n0884_002:0466b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘四部印亦然同用。",
        "from": "T18n0884_002:0466b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其五部大明次第如是。",
        "from": "T18n0884_002:0466b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明曰。",
        "from": "T18n0884_002:0466b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)馱(引)怛尾(二合引)說哩吽(引)嚩日哩(二合)尼(一句)唵(引)嚩日囉(二合)嚩日哩(二合)尼吽(引一句)唵(引)囉怛那(二合)嚩日哩(二合)尼吽(引一句)唵(引)鉢訥摩(二合)嚩日哩(二合)尼吽(引一句)唵(引)迦哩摩(二合)嚩日哩(二合)尼吽(引一句)如前所說作灌頂已。",
        "from": "T18n0884_002:0466b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不改前印以二頭指。",
        "from": "T18n0884_002:0466b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋轉二度作縈繞相。",
        "from": "T18n0884_002:0466b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成四種繫鬘之印。",
        "from": "T18n0884_002:0466b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂額喉及彼頂後四處繫鬘。",
        "from": "T18n0884_002:0466b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次至兩耳還從頂後旋轉於前。",
        "from": "T18n0884_002:0466b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徐徐而下即解其印。",
        "from": "T18n0884_002:0466b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如和合音聲教中法儀堅固而作。",
        "from": "T18n0884_002:0466b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼和合音聲教中說云。",
        "from": "T18n0884_002:0466b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當阿闍梨執金剛杵。",
        "from": "T18n0884_002:0466b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法安住已。",
        "from": "T18n0884_002:0466b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃為弟子發誓誡言。",
        "from": "T18n0884_002:0466b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　汝今得受此　　一切佛如來",
        "from": "T18n0884_002:0466b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　勝祕密法中　　金剛灌頂已",
        "from": "T18n0884_002:0466b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　授汝金剛杵　　善作諸成就",
        "from": "T18n0884_002:0466b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　而彼諸如來　　由此得成佛",
        "from": "T18n0884_002:0466b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復授大明曰。",
        "from": "T18n0884_002:0466b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合引)提鉢底埵(引一句)末毘詵左(引)彌(二)底瑟姹(二合)嚩日囉(二合)三摩邪薩怛鑁(三合三)爾時金剛手菩薩摩訶薩。",
        "from": "T18n0884_002:0466b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於世尊大毘盧遮那如來右月曼拏羅中。",
        "from": "T18n0884_002:0466c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依止住已作是白言。",
        "from": "T18n0884_002:0466c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何是自金剛杵。",
        "from": "T18n0884_002:0466c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大毘盧遮那如來。",
        "from": "T18n0884_002:0466c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手菩薩摩訶薩言。",
        "from": "T18n0884_002:0466c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手自金剛杵者。",
        "from": "T18n0884_002:0466c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是如來金剛杵。",
        "from": "T18n0884_002:0466c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二指量五股而作善妙之相。",
        "from": "T18n0884_002:0466c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無其光焰金等所成。",
        "from": "T18n0884_002:0466c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其金剛薩埵金剛杵者。",
        "from": "T18n0884_002:0466c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不定分量五股而作。",
        "from": "T18n0884_002:0466c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有其威猛熾盛光焰鉢訥摩囉誐等諸寶所成。",
        "from": "T18n0884_002:0466c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其金剛王等大執金剛者。",
        "from": "T18n0884_002:0466c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及金剛忿怒金剛藥叉等。",
        "from": "T18n0884_002:0466c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸杵皆十二指量三分亭等。",
        "from": "T18n0884_002:0466c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五股而作銳利之相。",
        "from": "T18n0884_002:0466c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等杵相。",
        "from": "T18n0884_002:0466c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大乘現證三昧教中及降三世教中廣說。",
        "from": "T18n0884_002:0466c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中略指。",
        "from": "T18n0884_002:0466c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽行者知杵相已。",
        "from": "T18n0884_002:0466c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後乃名已受金剛大灌頂者。",
        "from": "T18n0884_002:0466c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次大明曰。",
        "from": "T18n0884_002:0466c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)薩埵末毘詵左(引)彌(引一句)嚩日囉(二合)那(引)莫毘施(引)迦多(二)呬(引)嚩日囉(二合)那(引)莫(三)拽寫拽他(引)那(引)莫帝(引)那(四)怛吐(引)佐(引)囉曳[惺-生+土]咩(五)受灌頂已。",
        "from": "T18n0884_002:0466c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可得受諸佛成就大金剛杵。",
        "from": "T18n0884_002:0466c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次頌曰。",
        "from": "T18n0884_002:0466c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　汝常持此金剛杵　　即金剛手堅固戒　金剛薩埵勝修中　　一切由斯得成佛復次大明曰。",
        "from": "T18n0884_002:0466c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩哩嚩(二合)怛他(引)誐多悉提(一句)嚩日囉(二合)三摩曳(引)底瑟姹(二合)(二)伊沙埵(引)馱(引)囉夜(引)彌嚩日囉(二合)薩埵(三)呬呬呬呬吽(引)(四)然後從普賢心安布大印三昧。",
        "from": "T18n0884_002:0466c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨說如是心大明曰。",
        "from": "T18n0884_002:0466c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩賀(引)三摩邪薩埵三摩邪薩怛鑁(三合一句)摩賀(引)三摩邪薩都(引)[亢*欠](二)摩賀(引)三摩邪薩埵(引)提底瑟姹(二合)莎[牟*含](引)(三)如是印明。",
        "from": "T18n0884_002:0466c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執金剛等諸菩薩眾。",
        "from": "T18n0884_002:0467a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉於彼諸印真實大三昧中同一成就。",
        "from": "T18n0884_002:0467a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次身語心金剛所成心大明曰。",
        "from": "T18n0884_002:0467a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)薩埵三摩邪末努播(引)羅邪(一句)嚩日囉(二合)薩埵堆(引)奴(引)鉢底瑟姹(二合)(二)捺哩(二合)除(引)彌(引)婆嚩(三)蘇覩(引)沙踰(二合引)彌(引)婆嚩(四)阿努囉訖覩(二合引)彌(引)婆嚩(五)蘇布(引)沙踰(二合引)彌(引)婆嚩(六)薩哩嚩(二合)悉提孕(二合)彌(引)鉢囉(二合)野蹉(七)薩哩嚩(二合)葛哩摩(二合引)蘇左彌(引)唧多室利(二合引)煬酤嚕吽(八)訶訶訶訶呼(引)(九)婆誐鑁薩哩嚩(二合)怛他(引)誐多(十)嚩日囉(二合)摩(引)彌(引)捫左嚩日哩(二合引)婆嚩(十一)摩賀(引)三摩邪薩埵阿(引)(十二)如是身語心金剛所成心明章句。",
        "from": "T18n0884_002:0467a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦一遍。",
        "from": "T18n0884_002:0467a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得自身語心金剛三業一切密印堅固成就。",
        "from": "T18n0884_002:0467a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有本尊等諸法用。",
