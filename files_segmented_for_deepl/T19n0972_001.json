[
    {
        "source_sentence": "佛頂尊勝陀羅尼念誦儀軌法",
        "from": "T19n0972_001:0364b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一卷",
        "from": "T19n0972_001:0364b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T19n0972_001:0364b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒",
        "from": "T19n0972_001:0364b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正號大廣智大興善寺三藏沙門",
        "from": "T19n0972_001:0364b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空奉　詔譯",
        "from": "T19n0972_001:0364b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫念誦陀羅尼法。",
        "from": "T19n0972_001:0364b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於三昧耶曼荼羅。",
        "from": "T19n0972_001:0364b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見聖眾得灌頂知本尊。",
        "from": "T19n0972_001:0364b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師受得三昧耶。",
        "from": "T19n0972_001:0364b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於山間閑處或於淨室。",
        "from": "T19n0972_001:0364b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫本尊尊勝陀羅尼像。",
        "from": "T19n0972_001:0364b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於東壁。",
        "from": "T19n0972_001:0364b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上持誦者以面對之。",
        "from": "T19n0972_001:0364b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其念誦處掘地深一肘半。",
        "from": "T19n0972_001:0364b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地中若有瓦礫骨灰毛髮及諸穢物等。",
        "from": "T19n0972_001:0364b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並須除之。",
        "from": "T19n0972_001:0364b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無還取本土。",
        "from": "T19n0972_001:0364b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "填滿築令平正。",
        "from": "T19n0972_001:0364b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土若有餘其地吉祥。",
        "from": "T19n0972_001:0364b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷和好土。",
        "from": "T19n0972_001:0364b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泥地面令平正。",
        "from": "T19n0972_001:0364b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取瞿摩夷和水。",
        "from": "T19n0972_001:0364b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦無能勝陀羅尼二十一遍。",
        "from": "T19n0972_001:0364b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持瞿摩夷。",
        "from": "T19n0972_001:0364b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其無能勝真言曰。",
        "from": "T19n0972_001:0364b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒(入)馱(引)喃(引一)唵(引二)虎魯虎魯(三)戰拏理(四)摩蹬儗(五丁以反)娑嚩(二合引)賀(引)加持已。",
        "from": "T19n0972_001:0364b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後從東北隅起首右旋塗之。",
        "from": "T19n0972_001:0364b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次取蜀葵葉或蓮子葉。",
        "from": "T19n0972_001:0364b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揩拭令其光淨。",
        "from": "T19n0972_001:0364b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於上取白粉和水。",
        "from": "T19n0972_001:0364b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以繩分九位拼之。",
        "from": "T19n0972_001:0364b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石上磨白檀香用塗九位。",
        "from": "T19n0972_001:0364b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其九位者。",
        "from": "T19n0972_001:0364c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中央安毘盧遮那佛位。",
        "from": "T19n0972_001:0364c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右邊安觀自在菩薩位。",
        "from": "T19n0972_001:0364c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在後。",
        "from": "T19n0972_001:0364c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安慈氏菩薩位。",
        "from": "T19n0972_001:0364c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛位後。",
        "from": "T19n0972_001:0364c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安虛空藏菩薩位。",
        "from": "T19n0972_001:0364c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此菩薩左邊。",
        "from": "T19n0972_001:0364c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安普賢菩薩位。",
        "from": "T19n0972_001:0364c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛位左邊。",
        "from": "T19n0972_001:0364c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安金剛手菩薩位。",
        "from": "T19n0972_001:0364c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩位下。",
        "from": "T19n0972_001:0364c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安文殊師利菩薩位。",
        "from": "T19n0972_001:0364c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛前。",
        "from": "T19n0972_001:0364c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安除蓋障菩薩位。",
        "from": "T19n0972_001:0364c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除蓋障菩薩位右邊。",
        "from": "T19n0972_001:0364c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安地藏菩薩位。",
        "from": "T19n0972_001:0364c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名九位。",
        "from": "T19n0972_001:0364c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並用白檀香塗之。",
        "from": "T19n0972_001:0364c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為迎請賢聖之位。",
        "from": "T19n0972_001:0364c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳上安帳蓋四面懸幡。",
        "from": "T19n0972_001:0364c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道場四邊。",
        "from": "T19n0972_001:0364c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨朝奉獻乳糜。",
        "from": "T19n0972_001:0364c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋時獻酪飯并甜膩食。",
        "from": "T19n0972_001:0364c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以諸漿兼諸果子。",
        "from": "T19n0972_001:0364c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四門安四香爐。",
        "from": "T19n0972_001:0364c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隅安四淨瓶。",
        "from": "T19n0972_001:0364c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛香水插花或青葉樹枝。",
        "from": "T19n0972_001:0364c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為供養。",
        "from": "T19n0972_001:0364c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四角燃四盞酥燈。",
        "from": "T19n0972_001:0364c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道場前於念誦者座前。",
        "from": "T19n0972_001:0364c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置閼伽香水兩椀。",
        "from": "T19n0972_001:0364c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所盛供養。",
        "from": "T19n0972_001:0364c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取金銀熟銅瓷器或新瓦器或螺盃或新淨葉。",
        "from": "T19n0972_001:0364c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘並不堪。",
        "from": "T19n0972_001:0364c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲盛食時先淨洗器。",
        "from": "T19n0972_001:0364c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆之以香煙熏內。",
        "from": "T19n0972_001:0364c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既盛食已又須香烟熏之。",
        "from": "T19n0972_001:0364c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無能勝陀羅尼加持水灑之。",
        "from": "T19n0972_001:0364c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於壇中右旋布列。",
        "from": "T19n0972_001:0364c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後於壇前安卑脚床子。",
        "from": "T19n0972_001:0364c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去地半寸。",
        "from": "T19n0972_001:0364c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或茅草薦或藉以淨物。",
        "from": "T19n0972_001:0364c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦者坐之。",
        "from": "T19n0972_001:0364c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦人應淨澡浴。",
        "from": "T19n0972_001:0364c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澡浴法如蘇悉地中說。",
        "from": "T19n0972_001:0364c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以法澡浴。",
        "from": "T19n0972_001:0364c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀法實相以為澡浴。",
        "from": "T19n0972_001:0364c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以在家出家護持本律儀戒無所毀犯。",
        "from": "T19n0972_001:0364c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為澡浴。",
        "from": "T19n0972_001:0364c23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或每日三時佛前禮佛發露懺悔隨喜勸請發願迴向。",
        "from": "T19n0972_001:0364c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為澡浴。",
        "from": "T19n0972_001:0364c24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以清淨真言加持七遍。",
        "from": "T19n0972_001:0364c24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為清淨。",
        "from": "T19n0972_001:0365a01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澡浴正誦之時觀一切法本性清淨我亦得清淨。",
        "from": "T19n0972_001:0365a01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是作意即誦澡浴真言曰。",
        "from": "T19n0972_001:0365a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)娑嚩(二合)婆(引)嚩秫馱(引)薩嚩達摩(入)娑嚩(二)婆(引)嚩戍(引)度憾每日入道場念誦。",
        "from": "T19n0972_001:0365a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定其時節。",
        "from": "T19n0972_001:0365a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或二時謂早朝黃昏。",
        "from": "T19n0972_001:0365a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或三時加午時。",
        "from": "T19n0972_001:0365a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或四時依瑜伽加中夜。",
        "from": "T19n0972_001:0365a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於本教尊勝陀羅尼經。",
        "from": "T19n0972_001:0365a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每於白月十五日。",
        "from": "T19n0972_001:0365a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除滅業障增福延命。",
        "from": "T19n0972_001:0365a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要期誦一千遍。",
        "from": "T19n0972_001:0365a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證出世三摩地得不忘陀羅尼。",
        "from": "T19n0972_001:0365a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其日一日一夜不食為上。",
        "from": "T19n0972_001:0365a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或食三白食。",
        "from": "T19n0972_001:0365a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂乳酪粳米飯。",
        "from": "T19n0972_001:0365a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或粥為中。",
        "from": "T19n0972_001:0365a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或如常齋食為下。",
        "from": "T19n0972_001:0365a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身著淨衣服。",
        "from": "T19n0972_001:0365a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心應虔誠淨信。",
        "from": "T19n0972_001:0365a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不猶豫。",
        "from": "T19n0972_001:0365a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲持誦。",
        "from": "T19n0972_001:0365a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至道場先雙膝著地。",
        "from": "T19n0972_001:0365a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮毘盧遮那佛及八大菩薩。",
        "from": "T19n0972_001:0365a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發露懺悔發五大願。",
        "from": "T19n0972_001:0365a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一眾生無邊誓願度。",
        "from": "T19n0972_001:0365a15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二福智無邊誓願集。",
        "from": "T19n0972_001:0365a15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三法門無邊誓願學。",
        "from": "T19n0972_001:0365a16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四如來無邊誓願事。",
        "from": "T19n0972_001:0365a16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五無上菩提誓願成。",
        "from": "T19n0972_001:0365a17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結加趺坐以香塗手結三昧耶印誦真言曰。",
        "from": "T19n0972_001:0365a17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃(一)阿三冥(二)底哩(二合)三冥(三)三昧曳娑嚩(二合引)賀(引)其印。",
        "from": "T19n0972_001:0365a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌竪二大指印。",
        "from": "T19n0972_001:0365a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於五處。",
        "from": "T19n0972_001:0365a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "額右肩左肩心喉。",
        "from": "T19n0972_001:0365a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦真言一遍加持頂上散。",
        "from": "T19n0972_001:0365a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由三昧耶印真言威神力故。",
        "from": "T19n0972_001:0365a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能淨如來地地波羅蜜圓滿。",
        "from": "T19n0972_001:0365a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成就世間出世間悉地。",
        "from": "T19n0972_001:0365a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結法界生印誦真言曰。",
        "from": "T19n0972_001:0365a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱(引)南(一)達囉麼(二合)馱(引)賭(二)娑嚩(二合)娑嚩(二合)句憾結印相。",
        "from": "T19n0972_001:0365a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手大指安於掌中。",
        "from": "T19n0972_001:0365a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各作拳。",
        "from": "T19n0972_001:0365a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二頭指側並合。",
        "from": "T19n0972_001:0365a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於頂上。",
        "from": "T19n0972_001:0365a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從頂向下徐徐下散。",
        "from": "T19n0972_001:0365a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T19n0972_001:0365b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀自身等同法界。",
        "from": "T19n0972_001:0365b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸色相猶如虛空。",
        "from": "T19n0972_001:0365b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛薩埵法輪印誦真言曰。",
        "from": "T19n0972_001:0365b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多嚩日囉(二合)喃(引)唵(引)嚩日囉(二合引)怛摩(二合)句(引)憾結印相。",
        "from": "T19n0972_001:0365b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手背相叉。",
        "from": "T19n0972_001:0365b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左大指安右手掌中。",
        "from": "T19n0972_001:0365b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與右手大指相拄即誦真言三遍。",
        "from": "T19n0972_001:0365b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得自身如金剛薩埵。",
        "from": "T19n0972_001:0365b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛甲冑印真言曰。",
        "from": "T19n0972_001:0365b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多嚩日囉(二合)喃(引)唵(引)嚩日囉(二合)迦嚩者吽其印相。",
        "from": "T19n0972_001:0365b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手虛心合掌。",
        "from": "T19n0972_001:0365b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指各安於中指背。",
        "from": "T19n0972_001:0365b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指並合。",
        "from": "T19n0972_001:0365b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中指中節上成印。",
        "from": "T19n0972_001:0365b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同前五處各誦真言一遍。",
        "from": "T19n0972_001:0365b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此加持自身成被金剛甲冑。",
        "from": "T19n0972_001:0365b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天魔無能親近。",
        "from": "T19n0972_001:0365b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結不動尊印真言曰。",
        "from": "T19n0972_001:0365b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多嚩日囉(二合)喃(一)戰拏摩賀嚧沙拏(二句)薩叵(二合)吒耶(三)吽怛囉(二合)吒憾(引)[牟*含](引)結印二手各以大指。",
        "from": "T19n0972_001:0365b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻小指及無名指甲上。",
        "from": "T19n0972_001:0365b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各竪中指頭指並之。",
        "from": "T19n0972_001:0365b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手為鞘右手為刀。",
        "from": "T19n0972_001:0365b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以刀入鞘狀右刀印左旋轉辟除道場中諸魔作障者。",
        "from": "T19n0972_001:0365b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋轉八方結上下方隅界。",
        "from": "T19n0972_001:0365b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後想道場中須彌山。",
        "from": "T19n0972_001:0365b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於山頂上想七寶樓閣。",
        "from": "T19n0972_001:0365b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於樓閣中。",
        "from": "T19n0972_001:0365b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛與八十俱胝十地滿足菩薩摩訶薩。",
        "from": "T19n0972_001:0365b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為眷屬而自圍遶。",
        "from": "T19n0972_001:0365b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四門四隅各四菩薩及八供養。",
        "from": "T19n0972_001:0365b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以內外供養。",
        "from": "T19n0972_001:0365b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想奉獻。",
        "from": "T19n0972_001:0365b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明。",
        "from": "T19n0972_001:0365b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉請聖眾如來鉤印誦真言曰。",
        "from": "T19n0972_001:0365b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫(上)三(去)滿馱沒馱南(引一)噁(二引)薩嚩怛囉(二合)鉢囉(二合)底呵諦怛他(引)蘖當矩捨(三)冐地者囉哩耶(二合)跛哩布(引)囉迦(四)娑嚩(二合引)賀(引)結相二手內相叉作舉。",
        "from": "T19n0972_001:0365c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "申右手頭指。",
        "from": "T19n0972_001:0366a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈如鉤形。",
        "from": "T19n0972_001:0366a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍由印真言威神力故。",
        "from": "T19n0972_001:0366a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來及以聖眾。",
        "from": "T19n0972_001:0366a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不違本誓皆悉集會。",
        "from": "T19n0972_001:0366a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻座印誦真言曰。",
        "from": "T19n0972_001:0366a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃(引)惡(引急呼)契相二手虛心合掌。",
        "from": "T19n0972_001:0366a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指二大指相合。",
        "from": "T19n0972_001:0366a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘六指開舒微屈如蓮華敷。",
        "from": "T19n0972_001:0366a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍。",
        "from": "T19n0972_001:0366a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此印及真言威力。",
        "from": "T19n0972_001:0366a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出一切微妙寶座。",
        "from": "T19n0972_001:0366a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如雲海。",
        "from": "T19n0972_001:0366a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻如來一切聖眾。",
        "from": "T19n0972_001:0366a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次奉獻閼伽誦真言曰。",
        "from": "T19n0972_001:0366a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南(一)誐誐曩三摩三摩娑嚩(二合)賀(引)即以兩手捧器當額。",
        "from": "T19n0972_001:0366a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[跍*月]跪誦三遍。",
        "from": "T19n0972_001:0366a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻閼伽沐浴聖眾。",
        "from": "T19n0972_001:0366a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻塗香印誦真言曰。",
        "from": "T19n0972_001:0366a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫(上)三(去)曼多沒馱南(引一)微輸(上)馱巘(引)度(上)納婆嚩(引)耶娑嚩(二合引)賀契相右手竪掌向外。",
        "from": "T19n0972_001:0366a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左手握右手腕。",
        "from": "T19n0972_001:0366a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍由此印真言威力故。",
        "from": "T19n0972_001:0366a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出一切塗香雲海。",
        "from": "T19n0972_001:0366a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切如來及諸聖眾。",
        "from": "T19n0972_001:0366a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻花鬘印誦真言曰。",
        "from": "T19n0972_001:0366a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南(引)摩賀(引)昧怛哩夜(三合)毘庾(二合)那蘖帝娑嚩(二合)賀契相二手。",
        "from": "T19n0972_001:0366a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內相叉仰掌。",
        "from": "T19n0972_001:0366a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指相拄誦三遍。",
        "from": "T19n0972_001:0366a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此印及真言威力。",
        "from": "T19n0972_001:0366a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出一切花鬘雲海。",
        "from": "T19n0972_001:0366a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切如來聖眾。",
        "from": "T19n0972_001:0366a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻燒香印真言曰。",
        "from": "T19n0972_001:0366a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱(引)南(一)達麼馱(引)怛嚩(二合引)拏鼻音蘖帝(引)娑嚩(二合)賀契相二手仰掌。",
        "from": "T19n0972_001:0366a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以小指中指無名指屈竪相背。",
        "from": "T19n0972_001:0366b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍。",
        "from": "T19n0972_001:0366b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此印真言威力。",
        "from": "T19n0972_001:0366b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出一切燒香雲海。",
        "from": "T19n0972_001:0366b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切如來及諸聖眾。",
        "from": "T19n0972_001:0366b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻飲食印誦真言曰。",
        "from": "T19n0972_001:0366b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南(引)阿囉囉迦囉沫隣捺埿摩賀(引)沫履娑嚩(二合)賀契相虛心密令開掌如器。",
        "from": "T19n0972_001:0366b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍。",
        "from": "T19n0972_001:0366b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此印真言威力。",
        "from": "T19n0972_001:0366b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出無邊飲食雲海。",
        "from": "T19n0972_001:0366b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切如來及諸聖眾。",
        "from": "T19n0972_001:0366b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻燈明印誦真言曰。",
        "from": "T19n0972_001:0366b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱(引)南(引)怛他(引)櫱怛紫娑叵(二合)羅寧(二)嚩婆(去)娑娜(三)誐誐猱娜哩野(二合)娑嚩(二合)賀契相右手作拳竪中指。",
        "from": "T19n0972_001:0366b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指捻中指中節。",
        "from": "T19n0972_001:0366b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍。",
        "from": "T19n0972_001:0366b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此印真言威力。",
        "from": "T19n0972_001:0366b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出一切燈明雲海。",
        "from": "T19n0972_001:0366b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切如來及諸聖眾。",
        "from": "T19n0972_001:0366b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復如來大乘經所說。",
        "from": "T19n0972_001:0366b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀想幢蓋幡網瓔珞衣服繒綵等物諸供養雲海充遍法界誠實言伽他而讚曰。",
        "from": "T19n0972_001:0366b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以我功德力　　如來加持力",
        "from": "T19n0972_001:0366b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　及以法界力　　普供養而住",
        "from": "T19n0972_001:0366b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結虛空藏明妃印真言曰。",
        "from": "T19n0972_001:0366b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱(引)南(引)薩嚩他欠烏娜蘖(二合)帝娑叵囉呬(引)[牟*含]誐誐劍娑嚩(二合引)賀(引)其契相二手相叉合掌右押左。",
        "from": "T19n0972_001:0366b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦七遍。",
        "from": "T19n0972_001:0366b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想自身於心中有圓明月輪。",
        "from": "T19n0972_001:0366b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明。",
        "from": "T19n0972_001:0366b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月輪上想。",
        "from": "T19n0972_001:0366b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欠字。",
        "from": "T19n0972_001:0366b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白色放大光明。",
        "from": "T19n0972_001:0366b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照十方一切世界。",
        "from": "T19n0972_001:0366b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思欠字實相義。",
        "from": "T19n0972_001:0366c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂一切法等同虛空。",
        "from": "T19n0972_001:0366c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸色相離諸障礙。",
        "from": "T19n0972_001:0366c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於真實理中。",
        "from": "T19n0972_001:0366c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自身作金剛波羅蜜佛母菩薩像。",
        "from": "T19n0972_001:0366c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持蓮花。",
        "from": "T19n0972_001:0366c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其蓮花上有五股金剛杵。",
        "from": "T19n0972_001:0366c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作仰掌。",
        "from": "T19n0972_001:0367a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂手為施願勢。",
        "from": "T19n0972_001:0367a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具頭冠瓔珞。",
        "from": "T19n0972_001:0367a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面貌慈愍拔濟一切眾生勢。",
        "from": "T19n0972_001:0367a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀已。",
        "from": "T19n0972_001:0367a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手外相叉作拳。",
        "from": "T19n0972_001:0367a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二中指。",
        "from": "T19n0972_001:0367a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此金剛波羅蜜印。",
        "from": "T19n0972_001:0367a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持印於四處。",
        "from": "T19n0972_001:0367a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂印心額喉頂。",
        "from": "T19n0972_001:0367a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印已便散手誦金剛波羅蜜真言曰。",
        "from": "T19n0972_001:0367a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩怛嚩(二合)嚩日哩(二合)吽當印四處時。",
        "from": "T19n0972_001:0367a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦一遍。",
        "from": "T19n0972_001:0367a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即用前印安於額上誦三遍。",
        "from": "T19n0972_001:0367a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為灌頂灌頂已。",
        "from": "T19n0972_001:0367a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印手分兩邊。",
        "from": "T19n0972_001:0367a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛拳繼頂後。",
        "from": "T19n0972_001:0367a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T19n0972_001:0367a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合引)鼻詵遮",
        "from": "T19n0972_001:0367a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍。",
        "from": "T19n0972_001:0367a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結被甲印。",
        "from": "T19n0972_001:0367a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手各作金剛拳。",
        "from": "T19n0972_001:0367a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各竪頭指當心相纏。",
        "from": "T19n0972_001:0367a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如繼甲冑。",
        "from": "T19n0972_001:0367a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於背後亦復如是。",
        "from": "T19n0972_001:0367a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次臍次兩膝。",
        "from": "T19n0972_001:0367a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却繞腰後漸當心。",
        "from": "T19n0972_001:0367a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次兩肩亦如是繼。",
        "from": "T19n0972_001:0367a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次繼頂下項後額前。",
        "from": "T19n0972_001:0367a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却於腦後以兩金剛拳。",
        "from": "T19n0972_001:0367a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼漸垂手兩邊徐徐下。",
        "from": "T19n0972_001:0367a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如垂帶勢。",
        "from": "T19n0972_001:0367a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以兩手掌相拍三聲。",
        "from": "T19n0972_001:0367a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦被甲真言曰。",
        "from": "T19n0972_001:0367a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)砧(誅唵反)",
        "from": "T19n0972_001:0367a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又拍掌真言曰。",
        "from": "T19n0972_001:0367a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合)覩史耶(二合)縠自想己身成本尊已。",
        "from": "T19n0972_001:0367a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌屈二頭指甲相背。",
        "from": "T19n0972_001:0367a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指壓二頭指頭。",
        "from": "T19n0972_001:0367a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彈指勢。",
        "from": "T19n0972_001:0367a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦尊勝陀羅尼曰。",
        "from": "T19n0972_001:0367a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩慕(引)婆誐嚩帝(一)怛[口*束*頁](二合)路(引)枳也(二合二)鉢囉(二合)底(丁以反三)尾始瑟吒(二合引)也(四)勃馱(引)耶(五)婆誐嚩帝(六)怛儞也(二合)他(引七)唵(八)尾戍(引)馱也(九)三麼三滿多嚩婆娑(十)薩頗(二合)囉拏(十一)孽底(丁異反)誐賀曩(十二)薩囉(二合)婆(引)嚩秫(輸律反下並同)第(十三)阿鼻詵左[牟*含](十四引)素誐多嚩囉嚩左曩(十五)蜜[口*栗](二合)多(引)鼻曬罽(十六入)阿(引)賀囉阿(引上)賀囉(十七)阿(引入)欲散馱(引)囉抳(十八)戌(引)馱也戍馱也(十九)誐誐曩尾秫提(二十)鄔瑟抳(三合)沙(二十)尾惹也尾秫提(二十二)娑賀娑囉(二合二十三)囉濕弭(二合)散祖(引)禰帝(二十四)薩嚩怛他(引)孽多(引二十五)地瑟侘(引二合)曩(引)地瑟恥(二合)多(二十六)畆捺[口*(隸-木+士)](二合二十七)嚩日囉(二合)迦(引)耶(土二十八)僧(去)賀怛那秫第(二十九)薩嚩(引)嚩囉拏尾秫第(三十)鉢囉(二合)底儞靺多也(三十一)阿(引)欲秫第(三十二)三麼耶(引)地瑟恥(二合)帝(三十三)麼抳麼抳(三十四)怛闥多(引)步多俱胝(三十五)跛哩秫第(三十六)尾娑怖(二合)吒(三十七)勃地秫第(三十八)惹也惹也(三十九)尾惹也尾惹也(四十)娑麼(二合)囉娑麼(二合)囉(四十一)薩嚩勃馱(引)地瑟恥(二合)多秫第(四十二)嚩日[口*(隸-木+士)](二合)嚩日囉(二合)孽鞞(四十三)嚩日囕(二合)婆嚩覩(四十四)麼麼(四十五某甲)薩嚩薩怛嚩(二合引四十六)難(上引)左迦(上引)也尾秫第(四十七)薩嚩孽底(四十八)跛哩秫第(四十九)薩嚩怛他(引)孽多(五十)三摩(引)濕嚩(二合引)娑(引)地瑟恥(二合)帝(五十一)勃[亭*夜]勃[亭*夜](五十二)冐(引)馱也冒(引)馱也(五十三)三滿多跛哩秫第(五十四)薩嚩怛他(引)孽多(引五十五)地瑟姹(二合引)曩(引五十六)地瑟恥(二合)多(五十七)摩賀(引)畝捺[口*(隸-木+士)](二合五十八)娑嚩(二合引)賀(引五十九)所誦之聲。",
        "from": "T19n0972_001:0367a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不高不下不緩不急。",
        "from": "T19n0972_001:0367b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心緣觀毘盧遮那佛。",
        "from": "T19n0972_001:0367b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明。",
        "from": "T19n0972_001:0367c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦七遍已印頂上散。",
        "from": "T19n0972_001:0367c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取菩提子念珠安於掌中。",
        "from": "T19n0972_001:0367c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦加持念珠真言曰。",
        "from": "T19n0972_001:0367c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾嚧遮那麼羅娑嚩(二合引)賀(引)誦七遍已。",
        "from": "T19n0972_001:0367c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安頂上以左手。",
        "from": "T19n0972_001:0367c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當心。",
        "from": "T19n0972_001:0367c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承珠。",
        "from": "T19n0972_001:0367c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手移珠。",
        "from": "T19n0972_001:0367c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每與娑嚩(二合)賀齊聲移一珠。",
        "from": "T19n0972_001:0367c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦至一百八遍。",
        "from": "T19n0972_001:0367c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一千遍。",
        "from": "T19n0972_001:0368a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却取珠蟠於掌中。",
        "from": "T19n0972_001:0368a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌安於頂上。",
        "from": "T19n0972_001:0368a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而發所求清淨妙願。",
        "from": "T19n0972_001:0368a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切眾生皆悉獲得。",
        "from": "T19n0972_001:0368a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結本尊印。",
        "from": "T19n0972_001:0368a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦七遍或三遍。",
        "from": "T19n0972_001:0368a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結金剛波羅蜜印。",
        "from": "T19n0972_001:0368a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復結五種供養印。",
        "from": "T19n0972_001:0368a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并誦五種真言而供養之。",
        "from": "T19n0972_001:0368a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具如上說。",
        "from": "T19n0972_001:0368a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結不動尊印誦一遍。",
        "from": "T19n0972_001:0368a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印左轉即成解界。",
        "from": "T19n0972_001:0368a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執閼伽器奉獻供養。",
        "from": "T19n0972_001:0368a06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結前三昧耶印。",
        "from": "T19n0972_001:0368a07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當頂上奉送。",
        "from": "T19n0972_001:0368a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三昧耶真言一遍。",
        "from": "T19n0972_001:0368a08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解此印便誦金剛解脫真言曰。",
        "from": "T19n0972_001:0368a08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合)謨(引)訖叉(二合)穆奉送諸佛聖眾。",
        "from": "T19n0972_001:0368a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前禮拜發露懺悔隨喜勸請發願迴向已。",
        "from": "T19n0972_001:0368a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出道場。",
        "from": "T19n0972_001:0368a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後即於靜處。",
        "from": "T19n0972_001:0368a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉讀大乘經。",
        "from": "T19n0972_001:0368a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀第一義諦。",
        "from": "T19n0972_001:0368a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此妙福迴向所求。",
        "from": "T19n0972_001:0368a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "助成悉地。",
        "from": "T19n0972_001:0368a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作息災法。",
        "from": "T19n0972_001:0368a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向北其壇圓。",
        "from": "T19n0972_001:0368a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀聖眾白色。",
        "from": "T19n0972_001:0368a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道場中所供養物皆白。",
        "from": "T19n0972_001:0368a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身著白衣面向北坐。",
        "from": "T19n0972_001:0368a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒沈水香若作增長法。",
        "from": "T19n0972_001:0368a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東坐。",
        "from": "T19n0972_001:0368a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊及供養并自身衣服悉皆黃色。",
        "from": "T19n0972_001:0368a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒白壇香若作降伏法。",
        "from": "T19n0972_001:0368a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向南坐。",
