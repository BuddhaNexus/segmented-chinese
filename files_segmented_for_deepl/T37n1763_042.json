[
    {
        "source_sentence": "大般涅槃經集解卷第四十二",
        "from": "T37n1763_042:0510b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　阿闍世王六臣說邪見事",
        "from": "T37n1763_042:0510b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　耆婆慰喻阿闍世王事",
        "from": "T37n1763_042:0510b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行品之第七",
        "from": "T37n1763_042:0510b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時王舍大城阿闍世王(至)父王無辜橫加逆害。",
        "from": "T37n1763_042:0510b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0510b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0510b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "列在品末者。",
        "from": "T37n1763_042:0510b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四意。",
        "from": "T37n1763_042:0510b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證經多義。",
        "from": "T37n1763_042:0510b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一證慈等怨親。",
        "from": "T37n1763_042:0510b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二證慈有益。",
        "from": "T37n1763_042:0510b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三拔五逆重罪。",
        "from": "T37n1763_042:0510b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明若信因果。",
        "from": "T37n1763_042:0510b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生重慚愧。",
        "from": "T37n1763_042:0510b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發露悔過。",
        "from": "T37n1763_042:0510b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加闍世者。",
        "from": "T37n1763_042:0510b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為可拔。",
        "from": "T37n1763_042:0510b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如是者。",
        "from": "T37n1763_042:0510b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可救也。",
        "from": "T37n1763_042:0510b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此先明造罪之緣起。",
        "from": "T37n1763_042:0510b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內具十惡。",
        "from": "T37n1763_042:0510b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見未來。",
        "from": "T37n1763_042:0510b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外黨凶人。",
        "from": "T37n1763_042:0510b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂興重逆。",
        "from": "T37n1763_042:0510b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇濟曰。",
        "from": "T37n1763_042:0510b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有六意。",
        "from": "T37n1763_042:0510b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一明慈有有益。",
        "from": "T37n1763_042:0510b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明怨親等。",
        "from": "T37n1763_042:0510b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三明外淨眾生。",
        "from": "T37n1763_042:0510b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明能除。",
        "from": "T37n1763_042:0510b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五明悔過。",
        "from": "T37n1763_042:0510b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六明應近善友也。",
        "from": "T37n1763_042:0510b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0510b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有二意。",
        "from": "T37n1763_042:0510b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者猶是歎經。",
        "from": "T37n1763_042:0510b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者證成梵行有益也。",
        "from": "T37n1763_042:0510b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬遺記曰。",
        "from": "T37n1763_042:0510b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有五意。",
        "from": "T37n1763_042:0510b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一歎經。",
        "from": "T37n1763_042:0510b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二內臣勸詣佛。",
        "from": "T37n1763_042:0510b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三空中聲告勸隨耆婆。",
        "from": "T37n1763_042:0510b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四明佛慈無偏。",
        "from": "T37n1763_042:0510b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五明除罪也。",
        "from": "T37n1763_042:0510b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一解云。",
        "from": "T37n1763_042:0510b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一外臣勸以邪師。",
        "from": "T37n1763_042:0510b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二證梵行。",
        "from": "T37n1763_042:0510b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三示為慈有改悔之方。",
        "from": "T37n1763_042:0510b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四示有真知識。",
        "from": "T37n1763_042:0510b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五明其父教中是聲聞也。",
        "from": "T37n1763_042:0510b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下五段。",
        "from": "T37n1763_042:0510b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一明外臣勸也。",
        "from": "T37n1763_042:0510b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_042:0510b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是梵行品中。",
        "from": "T37n1763_042:0510b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大段之第四。",
        "from": "T37n1763_042:0510b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證經力用。",
        "from": "T37n1763_042:0510b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除重罪也。",
        "from": "T37n1763_042:0510b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有五意。",
        "from": "T37n1763_042:0510b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一上來雖明經有大力。",
        "from": "T37n1763_042:0510b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除重罪。",
        "from": "T37n1763_042:0510b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未見其事。",
        "from": "T37n1763_042:0510b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今出闍世。",
        "from": "T37n1763_042:0510b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親是其人。",
        "from": "T37n1763_042:0510b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以經力故。",
        "from": "T37n1763_042:0510b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪得除也。",
        "from": "T37n1763_042:0510b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二既明四無量心是實益。",
        "from": "T37n1763_042:0510b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不出其相。",
        "from": "T37n1763_042:0510b26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則何以為驗。",
        "from": "T37n1763_042:0510b26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今故教月受三昧。",
        "from": "T37n1763_042:0510b27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先除王身之瘡。",
        "from": "T37n1763_042:0510b27_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近表慈悲之實也。",
        "from": "T37n1763_042:0510b27_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三欲明如來一化之中。",
        "from": "T37n1763_042:0510b28_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為人天作善知識。",
        "from": "T37n1763_042:0510b28_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足入道之因緣也。",
        "from": "T37n1763_042:0510b29_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯六師為惡友。",
        "from": "T37n1763_042:0510b29_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆為善知。",
        "from": "T37n1763_042:0510c01_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四示人懺悔之法則。",
        "from": "T37n1763_042:0510c01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若當有罪。",
        "from": "T37n1763_042:0510c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能如闍世者。",
        "from": "T37n1763_042:0510c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必滅矣。",
        "from": "T37n1763_042:0510c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五遠證三乘慈等也。",
        "from": "T37n1763_042:0510c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第教云。",
        "from": "T37n1763_042:0510c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞無有慈悲。",
        "from": "T37n1763_042:0510c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濟拔於物。",
        "from": "T37n1763_042:0510c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而頻婆娑羅。",
        "from": "T37n1763_042:0510c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親是須陀洹人。",
        "from": "T37n1763_042:0510c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能捨重怨。",
        "from": "T37n1763_042:0510c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中有勸也。",
        "from": "T37n1763_042:0510c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_042:0510c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "品中之第五大段。",
        "from": "T37n1763_042:0510c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證慈悲有實益義也。",
        "from": "T37n1763_042:0510c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文有四別。",
        "from": "T37n1763_042:0510c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一出內有惡因。",
        "from": "T37n1763_042:0510c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外隨惡緣造惡。",
        "from": "T37n1763_042:0510c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二耆婆為善友。",
        "from": "T37n1763_042:0510c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸其詣佛。",
        "from": "T37n1763_042:0510c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三其父勸也。",
        "from": "T37n1763_042:0510c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四佛自放光。",
        "from": "T37n1763_042:0510c08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "接化之也。",
        "from": "T37n1763_042:0510c08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因害父已心生悔熱(至)有能治者無有是處。",
        "from": "T37n1763_042:0510c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0510c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0510c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明信有悔。",
        "from": "T37n1763_042:0510c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有大臣名曰月稱(至)滅除我罪我當歸依。",
        "from": "T37n1763_042:0510c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0510c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0510c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼國之俗。",
        "from": "T37n1763_042:0510c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慰喻之偈。",
        "from": "T37n1763_042:0510c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以人人說之。",
        "from": "T37n1763_042:0510c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以曉王意也。",
        "from": "T37n1763_042:0510c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富蘭那者名也。",
        "from": "T37n1763_042:0510c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓迦葉。",
        "from": "T37n1763_042:0510c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人起斷滅之見。",
        "from": "T37n1763_042:0510c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云生法如是也。",
        "from": "T37n1763_042:0510c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0510c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大邪見。",
        "from": "T37n1763_042:0510c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦無因果也。",
        "from": "T37n1763_042:0510c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有一臣名曰藏德(至)除滅我罪我當歸依。",
        "from": "T37n1763_042:0510c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0510c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0510c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末伽梨是其字。",
        "from": "T37n1763_042:0510c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拘舍離是母字。",
        "from": "T37n1763_042:0510c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人起斷常見也。",
        "from": "T37n1763_042:0510c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂七分是常。",
        "from": "T37n1763_042:0510c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無善惡是斷也。",
        "from": "T37n1763_042:0510c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊師迦草。",
        "from": "T37n1763_042:0510c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外皮軟脆。",
        "from": "T37n1763_042:0510c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內幹堅實。",
        "from": "T37n1763_042:0510c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬七法無害者及死者也。",
        "from": "T37n1763_042:0510c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七分一一非人。",
        "from": "T37n1763_042:0510c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性異不可合為一。",
        "from": "T37n1763_042:0510c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無害者也。",
        "from": "T37n1763_042:0510c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若治國法殺。",
        "from": "T37n1763_042:0510c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無罪者治。",
        "from": "T37n1763_042:0510c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國有刑殺之罪罪。",
        "from": "T37n1763_042:0510c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自招死非。",
        "from": "T37n1763_042:0510c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺者罪。",
        "from": "T37n1763_042:0510c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法名無法者。",
        "from": "T37n1763_042:0510c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答王所言無辜咎也。",
        "from": "T37n1763_042:0510c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先王雖無狂濫之罪。",
        "from": "T37n1763_042:0510c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不無刑殺之咎。",
        "from": "T37n1763_042:0510c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有餘報者。",
        "from": "T37n1763_042:0510c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有過去罪也。",
        "from": "T37n1763_042:0510c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0510c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二邪見外道。",
        "from": "T37n1763_042:0510c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立常見也。",
        "from": "T37n1763_042:0510c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有一臣名曰實得(至)能除我罪我當歸依。",
        "from": "T37n1763_042:0510c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0510c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0510c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刪闍耶是字。",
        "from": "T37n1763_042:0510c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘羅胝是其母字。",
        "from": "T37n1763_042:0510c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人起見云。",
        "from": "T37n1763_042:0510c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切苦樂。",
        "from": "T37n1763_042:0510c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因在過去。",
        "from": "T37n1763_042:0510c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現在無因。",
        "from": "T37n1763_042:0510c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來無果。",
        "from": "T37n1763_042:0510c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在持戒。",
        "from": "T37n1763_042:0510c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮苦果不起。",
        "from": "T37n1763_042:0510c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為解脫。",
        "from": "T37n1763_042:0510c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0511a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三邪見。",
        "from": "T37n1763_042:0511a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計一切苦樂。",
        "from": "T37n1763_042:0511a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆過去造也。",
        "from": "T37n1763_042:0511a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有一臣名悉知義(至)除滅我罪我當歸依。",
        "from": "T37n1763_042:0511a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿耆多翅舍其字也。",
        "from": "T37n1763_042:0511a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欽婆羅衣也。",
        "from": "T37n1763_042:0511a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著麁衣苦行。",
        "from": "T37n1763_042:0511a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人起見。",
        "from": "T37n1763_042:0511a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂苦樂之因。",
        "from": "T37n1763_042:0511a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦在過去。",
        "from": "T37n1763_042:0511a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若現受苦事。",
        "from": "T37n1763_042:0511a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自得解脫。",
        "from": "T37n1763_042:0511a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故種種受苦。",
        "from": "T37n1763_042:0511a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投淵赴火五熱炙身等也。",
        "from": "T37n1763_042:0511a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0511a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人執斷見也。",
        "from": "T37n1763_042:0511a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有大臣名曰吉德(至)能滅我罪我當歸依。",
        "from": "T37n1763_042:0511a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦羅鳩馱其字也。",
        "from": "T37n1763_042:0511a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦栴延其姓也。",
        "from": "T37n1763_042:0511a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人謂。",
        "from": "T37n1763_042:0511a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切萬物。",
        "from": "T37n1763_042:0511a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在天作。",
        "from": "T37n1763_042:0511a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無慚愧。",
        "from": "T37n1763_042:0511a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在天喜。",
        "from": "T37n1763_042:0511a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不入地獄也。",
        "from": "T37n1763_042:0511a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0511a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五此是二十五諦家計也。",
        "from": "T37n1763_042:0511a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有一臣名無所畏(至)能除我罪我當歸依。",
        "from": "T37n1763_042:0511a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼犍其字也。",
        "from": "T37n1763_042:0511a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若提其母字也。",
        "from": "T37n1763_042:0511a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂因亦過去受生死。",
        "from": "T37n1763_042:0511a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逕八萬劫苦盡。",
        "from": "T37n1763_042:0511a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無善惡行道斷苦。",
        "from": "T37n1763_042:0511a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言無阿羅漢修道等也。",
        "from": "T37n1763_042:0511a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0511a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六此人計有自然解脫也。",
        "from": "T37n1763_042:0511a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_042:0511a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自初至此。",
        "from": "T37n1763_042:0511a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別惡友之辭。",
        "from": "T37n1763_042:0511a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自下耆婆以去。",
        "from": "T37n1763_042:0511a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明善知識事。",
        "from": "T37n1763_042:0511a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大醫名曰耆婆往(至)王所白言大王得安眠不。",
        "from": "T37n1763_042:0511a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向來大臣。",
        "from": "T37n1763_042:0511a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並不見因果。",
        "from": "T37n1763_042:0511a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言居王位自在得殺。",
        "from": "T37n1763_042:0511a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應愁苦。",
        "from": "T37n1763_042:0511a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不進其師也。",
        "from": "T37n1763_042:0511a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今耆婆見有因果。",
        "from": "T37n1763_042:0511a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已既有罪。",
        "from": "T37n1763_042:0511a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理應愁苦。",
        "from": "T37n1763_042:0511a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得安眠。",
        "from": "T37n1763_042:0511a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故問。",
        "from": "T37n1763_042:0511a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王以偈答若有能永斷(至)盜者未獲財不得安隱眠。",
        "from": "T37n1763_042:0511a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初四偈說佛也。",
        "from": "T37n1763_042:0511a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次五偈半。",
        "from": "T37n1763_042:0511a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說菩薩也。",
        "from": "T37n1763_042:0511a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次二偈。",
        "from": "T37n1763_042:0511a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一謂佛。",
        "from": "T37n1763_042:0511a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一謂菩薩也。",
        "from": "T37n1763_042:0511a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次三偈說有罪故。",
        "from": "T37n1763_042:0511a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得安眠也。",
        "from": "T37n1763_042:0511a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次三偈廣說不安眠事也。",
        "from": "T37n1763_042:0511a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_042:0511a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈以下凡有四意。",
        "from": "T37n1763_042:0511a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初九行半。",
        "from": "T37n1763_042:0511a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出得眠也。",
        "from": "T37n1763_042:0511a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二有兩行。",
        "from": "T37n1763_042:0511a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出得眠人。",
        "from": "T37n1763_042:0511a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三六行。",
        "from": "T37n1763_042:0511a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出不得眠法。",
        "from": "T37n1763_042:0511b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四長行自中也。",
        "from": "T37n1763_042:0511b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆我今病重於正法王(至)演說法藥除我病苦。",
        "from": "T37n1763_042:0511b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先自說不治之病。",
        "from": "T37n1763_042:0511b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得憂也。",
        "from": "T37n1763_042:0511b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後知病起由心。",
        "from": "T37n1763_042:0511b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非草石所療。",
        "from": "T37n1763_042:0511b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非法王。",
        "from": "T37n1763_042:0511b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無可治也。",
        "from": "T37n1763_042:0511b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆答言善哉王雖作罪心生重悔而懷慚愧。",
        "from": "T37n1763_042:0511b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶王病輕也。",
        "from": "T37n1763_042:0511b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王知父母恩重有慚愧故。",
        "from": "T37n1763_042:0511b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生重悔。",
        "from": "T37n1763_042:0511b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露向人懼地獄苦。",
        "from": "T37n1763_042:0511b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信有因果。",
        "from": "T37n1763_042:0511b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具此五善。",
        "from": "T37n1763_042:0511b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王病易治。",
        "from": "T37n1763_042:0511b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫懷怖畏。",
        "from": "T37n1763_042:0511b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下一一引佛語證也。",
        "from": "T37n1763_042:0511b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0511b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有七番說法也。",
        "from": "T37n1763_042:0511b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_042:0511b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有八番說法也。",
        "from": "T37n1763_042:0511b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_042:0511b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有六番說法也。",
        "from": "T37n1763_042:0511b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至處更敘也。",
        "from": "T37n1763_042:0511b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王諸佛世尊常說是言(至)善哉大王具有慚愧。",
        "from": "T37n1763_042:0511b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證慚愧也。",
        "from": "T37n1763_042:0511b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_042:0511b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一明具慚愧故。",
        "from": "T37n1763_042:0511b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪可除也。",
        "from": "T37n1763_042:0511b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王且聽臣聞佛說(至)罪則除滅清淨如本。",
        "from": "T37n1763_042:0511b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證悔過也。",
        "from": "T37n1763_042:0511b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王富有二種一者象馬(至)多作諸惡不如一善。",
        "from": "T37n1763_042:0511b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善從理生。",
        "from": "T37n1763_042:0511b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有根力強。",
        "from": "T37n1763_042:0511b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡橫故無根。",
        "from": "T37n1763_042:0511b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則力弱也。",
        "from": "T37n1763_042:0511b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上直提佛語。",
        "from": "T37n1763_042:0511b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以理釋也。",
        "from": "T37n1763_042:0511b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣聞佛說修一善心(至)何以故破大惡故。",
        "from": "T37n1763_042:0511b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說證善力強也。",
        "from": "T37n1763_042:0511b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王如佛所說覆藏者漏(至)說有智者不覆藏罪。",
        "from": "T37n1763_042:0511b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明王雖作重罪。",
        "from": "T37n1763_042:0511b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能壞發露。",
        "from": "T37n1763_042:0511b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪可滅也。",
        "from": "T37n1763_042:0511b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉大王能信因果(至)云何而言不可救療。",
        "from": "T37n1763_042:0511b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證發露則罪滅也。",
        "from": "T37n1763_042:0511b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_042:0511b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明王信心不斷故可治也。",
        "from": "T37n1763_042:0511b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_042:0511b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來至此。",
        "from": "T37n1763_042:0511b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一既非闡提。",
        "from": "T37n1763_042:0511b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有慚愧。",
        "from": "T37n1763_042:0511b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪可滅。",
        "from": "T37n1763_042:0511b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如王所言無能治者(至)在拘尸城娑羅雙樹間。",
        "from": "T37n1763_042:0511c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0511c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二說有師故罪可治也。",
        "from": "T37n1763_042:0511c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_042:0511c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四示王醫所也。",
        "from": "T37n1763_042:0511c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_042:0511c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明現在既有大師在此。",
        "from": "T37n1763_042:0511c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何言無耶。",
        "from": "T37n1763_042:0511c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣為無量阿僧祇等(至)所有重罪即當消滅。",
        "from": "T37n1763_042:0511c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_042:0511c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_042:0511c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示王醫所也。",
        "from": "T37n1763_042:0511c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以須具說者。",
        "from": "T37n1763_042:0511c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六師皆言其師一切智。",
        "from": "T37n1763_042:0511c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故須本末述之。",
        "from": "T37n1763_042:0511c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_042:0511c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明此師說法藥。",
        "from": "T37n1763_042:0511c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故罪可治也。",
        "from": "T37n1763_042:0511c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_042:0511c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五耆婆為王。",
        "from": "T37n1763_042:0511c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說二諦除罪之法藥也。",
        "from": "T37n1763_042:0511c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_042:0511c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二句舉善。",
        "from": "T37n1763_042:0511c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今列法藥也。",
        "from": "T37n1763_042:0511c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第四十二",
        "from": "T37n1763_042:0511c11_0",
        "context_with_next_sentence": false
    }
]