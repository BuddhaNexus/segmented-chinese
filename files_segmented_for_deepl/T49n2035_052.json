[
    {
        "source_sentence": "佛祖統紀卷第五十二",
        "from": "T49n2035_052:0455a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋咸淳四明福泉沙門志磐撰",
        "from": "T49n2035_052:0455a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷代會要志第十九之二",
        "from": "T49n2035_052:0455a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿命前身　　放生禁殺　　祈禱災異國朝典故　　諸國朝貢宿命前身晉武帝。",
        "from": "T49n2035_052:0455a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羊祐前身造武當山寺。",
        "from": "T49n2035_052:0455b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今供給偏重(云云)。",
        "from": "T49n2035_052:0455b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁武帝。",
        "from": "T49n2035_052:0455b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岳陽王蕭察鎮越。",
        "from": "T49n2035_052:0455b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知前身是許詢與曇彥造塔(云云)。",
        "from": "T49n2035_052:0455b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北齊文宣。",
        "from": "T49n2035_052:0455b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使人乘駝出城。",
        "from": "T49n2035_052:0455b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奄然如夢。",
        "from": "T49n2035_052:0455b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至山腹寺取經函。",
        "from": "T49n2035_052:0455b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群沙彌曰。",
        "from": "T49n2035_052:0455b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高洋駝來。",
        "from": "T49n2035_052:0455b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引見老僧。",
        "from": "T49n2035_052:0455b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "T49n2035_052:0455b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高洋作天子何如(云云)。",
        "from": "T49n2035_052:0455b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐太宗。",
        "from": "T49n2035_052:0455b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威禪師前身是陳徐陵。",
        "from": "T49n2035_052:0455b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽智者講經立五願。",
        "from": "T49n2035_052:0455b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後生縉雲朱氏。",
        "from": "T49n2035_052:0455b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投章安為師○栽松道者。",
        "from": "T49n2035_052:0455b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "託生周氏女。",
        "from": "T49n2035_052:0455b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇四祖出家。",
        "from": "T49n2035_052:0455b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為五祖忍○玄宗。",
        "from": "T49n2035_052:0455b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "房琯與道士邢和璞過夏。",
        "from": "T49n2035_052:0455b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入廢寺使人掘地。",
        "from": "T49n2035_052:0455b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得甕中所藏婁師德與永禪師書。",
        "from": "T49n2035_052:0455b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅然悟前身為永○沙門法秀有異僧引入終南山。",
        "from": "T49n2035_052:0455b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見朱門榜曰回向。",
        "from": "T49n2035_052:0455b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老宿指宮房曰。",
        "from": "T49n2035_052:0455b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此唐天子舊室。",
        "from": "T49n2035_052:0455b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命侍者取玉簫曰。",
        "from": "T49n2035_052:0455b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向居此好聲樂。",
        "from": "T49n2035_052:0455b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謫為人間主。",
        "from": "T49n2035_052:0455b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○德宗。",
        "from": "T49n2035_052:0455b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西川節度韋臯初生。",
        "from": "T49n2035_052:0455b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有梵僧曰。",
        "from": "T49n2035_052:0455b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸葛武侯後身。",
        "from": "T49n2035_052:0455b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○憲宗。",
        "from": "T49n2035_052:0455b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊君佐梵僧與一棗食之。",
        "from": "T49n2035_052:0455b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即悟前身是講經僧。",
        "from": "T49n2035_052:0455b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃投靈隱出家名鑑空。",
        "from": "T49n2035_052:0455b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○僖宗。",
        "from": "T49n2035_052:0455b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知玄國師見一珠入左股痛甚。",
        "from": "T49n2035_052:0455b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有晁錯二字。",
        "from": "T49n2035_052:0455b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄知宿業即右脇而逝。",
        "from": "T49n2035_052:0455b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世稱玄是袁盎後身(云云)。",
        "from": "T49n2035_052:0455b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋仁宗。",
        "from": "T49n2035_052:0455b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參政張方平出知滁州。",
        "from": "T49n2035_052:0455b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至僧舍見楞伽經。",
        "from": "T49n2035_052:0455b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手迹宛然。",
        "from": "T49n2035_052:0455b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知前身為書經僧○宰相曾公亮。",
        "from": "T49n2035_052:0455b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前身是禪門青草堂○頴州官妓。",
        "from": "T49n2035_052:0455b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口作蓮華香。",
        "from": "T49n2035_052:0455b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜀僧曰。",
        "from": "T49n2035_052:0455b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此女前為尼。",
        "from": "T49n2035_052:0455b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦法華三十年○哲宗。",
        "from": "T49n2035_052:0455b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘇軾前身五祖戒禪師。",
        "from": "T49n2035_052:0455b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○放生禁殺",
        "from": "T49n2035_052:0455c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋文帝。",
        "from": "T49n2035_052:0455c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔天下正五九月及六齋日。",
        "from": "T49n2035_052:0455c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得殺生命○智者禪師至岳州講金光明經。",
        "from": "T49n2035_052:0455c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化一郡五縣。",
        "from": "T49n2035_052:0455c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一千餘所咸捨漁捕。",
        "from": "T49n2035_052:0455c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁武帝。",
        "from": "T49n2035_052:0455c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅太醫不得以生類為藥。",
        "from": "T49n2035_052:0455c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郊廟牲牷。",
        "from": "T49n2035_052:0455c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆代以麪。",
        "from": "T49n2035_052:0455c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗廟用蔬果。",
        "from": "T49n2035_052:0455c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北魏獻文。",
        "from": "T49n2035_052:0455c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅祭天地宗社勿用牲。",
        "from": "T49n2035_052:0455c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲活七萬五千牲命。",
        "from": "T49n2035_052:0455c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北齊文宣。",
        "from": "T49n2035_052:0455c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受戒不食肉。",
        "from": "T49n2035_052:0455c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禁境內屠殺。",
        "from": "T49n2035_052:0455c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐高祖。",
        "from": "T49n2035_052:0455c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔正五九及月十齋日。",
        "from": "T49n2035_052:0455c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得行刑屠釣○武后。",
        "from": "T49n2035_052:0455c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅斷天下屠釣○肅宗。",
        "from": "T49n2035_052:0455c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔天下立放生池。",
        "from": "T49n2035_052:0455c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡八十一所。",
        "from": "T49n2035_052:0455c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏真卿撰碑。",
        "from": "T49n2035_052:0455c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋太祖。",
        "from": "T49n2035_052:0455c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔民間二月至九月。",
        "from": "T49n2035_052:0455c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許採捕彈射。",
        "from": "T49n2035_052:0455c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著於令○真宗。",
        "from": "T49n2035_052:0455c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔天下州郡放生池悉與興復。",
        "from": "T49n2035_052:0455c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無池之處沿江淮州郡近城五里。",
        "from": "T49n2035_052:0455c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並禁漁捕○諸暨令潘華。",
        "from": "T49n2035_052:0455c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依普賢懺法不令捕江湖間魚。",
        "from": "T49n2035_052:0455c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及奉詔還闕。",
        "from": "T49n2035_052:0455c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢魚為人形者數萬。",
        "from": "T49n2035_052:0455c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號哭沸天。",
        "from": "T49n2035_052:0455c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆云長者去矣。",
        "from": "T49n2035_052:0455c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾輩不免烹矣。",
        "from": "T49n2035_052:0455c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云云○天竺慈雲法師奏請西湖為放生池。",
        "from": "T49n2035_052:0455c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每歲四月八日。",
        "from": "T49n2035_052:0455c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郡人會湖上縱魚鳥。",
        "from": "T49n2035_052:0455c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為主上祝壽。",
        "from": "T49n2035_052:0455c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁宗。",
        "from": "T49n2035_052:0455c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明延慶法智法師。",
        "from": "T49n2035_052:0455c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每歲佛生日放魚鳥祝聖壽。",
        "from": "T49n2035_052:0455c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郡以上聞。",
        "from": "T49n2035_052:0455c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅樞密劉筠撰碑立於寺門。",
        "from": "T49n2035_052:0455c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈禱災異",
        "from": "T49n2035_052:0455c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉簡文。",
        "from": "T49n2035_052:0455c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有烏巢太極殿。",
        "from": "T49n2035_052:0455c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召尼道容授八關齋戒。",
        "from": "T49n2035_052:0455c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏運巢而去○妖星為變。",
        "from": "T49n2035_052:0455c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召沙門法曠行懺。",
        "from": "T49n2035_052:0455c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "星為之沒○孝武。",
        "from": "T49n2035_052:0455c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天涉公至長安。",
        "from": "T49n2035_052:0455c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常呪龍致雨。",
        "from": "T49n2035_052:0455c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦主尊事之。",
        "from": "T49n2035_052:0455c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊武帝不豫。",
        "from": "T49n2035_052:0455c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召諸沙門祈佛。",
        "from": "T49n2035_052:0455c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感天香滿殿聖僧振錫　北魏節閔國子博士盧景祐通佛法。",
        "from": "T49n2035_052:0455c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從兄作亂累及景祐。",
        "from": "T49n2035_052:0456a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心誦經枷鎖自脫。",
        "from": "T49n2035_052:0456a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋文帝。",
        "from": "T49n2035_052:0456a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亢旱。",
        "from": "T49n2035_052:0456a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇延法師升御座。",
        "from": "T49n2035_052:0456a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝及群臣受八關齋戒。",
        "from": "T49n2035_052:0456a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄而雨注。",
        "from": "T49n2035_052:0456a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐太宗。",
        "from": "T49n2035_052:0456a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔京城諸郡僧道。",
        "from": "T49n2035_052:0456a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉經行道七日夜。",
        "from": "T49n2035_052:0456a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈保秋成。",
        "from": "T49n2035_052:0456a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每歲正七月為式○詔京城沙門。",
        "from": "T49n2035_052:0456a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每月二十七日行道。",
        "from": "T49n2035_052:0456a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉仁王經。",
        "from": "T49n2035_052:0456a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為國祈福○詔淨禪師至京祈雨。",
        "from": "T49n2035_052:0456a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感白虹晝見。",
        "from": "T49n2035_052:0456a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大雨通濟○中宗。",
        "from": "T49n2035_052:0456a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔菩提流志結壇祈雨。",
        "from": "T49n2035_052:0456a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三日大澍。",
        "from": "T49n2035_052:0456a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄宗。",
        "from": "T49n2035_052:0456a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康居入寇安西。",
        "from": "T49n2035_052:0456a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔不空誦仁王呪。",
        "from": "T49n2035_052:0456a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感北天王子神兵現。",
        "from": "T49n2035_052:0456a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五國奔潰○代宗。",
        "from": "T49n2035_052:0456a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吐蕃逼京師。",
        "from": "T49n2035_052:0456a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內出仁王經。",
        "from": "T49n2035_052:0456a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔不空置百高座講經。",
        "from": "T49n2035_052:0456a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寇平○勅灌頂道場。",
        "from": "T49n2035_052:0456a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "選沙門二七員。",
        "from": "T49n2035_052:0456a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為國長誦佛頂呪○彗星見於東方。",
        "from": "T49n2035_052:0456a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔不空行法。",
        "from": "T49n2035_052:0456a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "星為殞。",
        "from": "T49n2035_052:0456a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春夏不雨。",
        "from": "T49n2035_052:0456a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建壇祈禱。",
        "from": "T49n2035_052:0456a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大雨沾足○當陽節度張昭。",
        "from": "T49n2035_052:0456a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請沙門自覺曰。",
        "from": "T49n2035_052:0456a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞龍神依師聽經忘其行雨。",
        "from": "T49n2035_052:0456a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願起大悲。",
        "from": "T49n2035_052:0456a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師焚香遙祝。",
        "from": "T49n2035_052:0456a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲起大雨。",
        "from": "T49n2035_052:0456a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋太祖。",
        "from": "T49n2035_052:0456a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸相國寺祈雨。",
        "from": "T49n2035_052:0456a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設千僧齋○上幸相國寺祈雨。",
        "from": "T49n2035_052:0456a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進蔬食雨大濟○將郊天雨不止。",
        "from": "T49n2035_052:0456a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣使禱無畏真身塔。",
        "from": "T49n2035_052:0456a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期而霽○真宗。",
        "from": "T49n2035_052:0456a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亢旱梵僧於金明池立壇呪龍。",
        "from": "T49n2035_052:0456a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾雨至○神宗。",
        "from": "T49n2035_052:0456a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夏旱。",
        "from": "T49n2035_052:0456a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上於禁中齋禱。",
        "from": "T49n2035_052:0456a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢神僧空中吐霧。",
        "from": "T49n2035_052:0456a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺而大雨。",
        "from": "T49n2035_052:0456a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅求其像。",
        "from": "T49n2035_052:0456a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得之相國寺閣第十三尊羅漢○哲宗昇法師居興福。",
        "from": "T49n2035_052:0456a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙清獻公帥越。",
        "from": "T49n2035_052:0456a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亢旱大疫。",
        "from": "T49n2035_052:0456a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎大士懇禱。",
        "from": "T49n2035_052:0456a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕雨注疫病亦息。",
        "from": "T49n2035_052:0456a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因奏所居曰圓通○高宗。",
        "from": "T49n2035_052:0456a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孟后去國南向。",
        "from": "T49n2035_052:0456a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉摩利支天像以護身○李玨避虜遇乘車人。",
        "from": "T49n2035_052:0456b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教持摩利支天尊號。",
        "from": "T49n2035_052:0456b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲免兵厄○金虜入杭。",
        "from": "T49n2035_052:0456b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上親詣上竺大士殿恭禱。",
        "from": "T49n2035_052:0456b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為戰沒者修水陸供。",
        "from": "T49n2035_052:0456b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有夢戰死者相慶得生善趣○大旱。",
        "from": "T49n2035_052:0456b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔道法師祈雨。",
        "from": "T49n2035_052:0456b05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師呪四鮮鯽投諸江。",
        "from": "T49n2035_052:0456b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨大洽○淫雨不止。",
        "from": "T49n2035_052:0456b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣內侍禱上竺大士。",
        "from": "T49n2035_052:0456b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施玉器七寶冠。",
        "from": "T49n2035_052:0456b07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國朝典故(聖節　內道場　功德院　國諱)北魏太武。",
        "from": "T49n2035_052:0456b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誕生之節。",
        "from": "T49n2035_052:0456b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始詔天下佛寺建祝壽道場。",
        "from": "T49n2035_052:0456b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐玄宗。",
        "from": "T49n2035_052:0456b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔天下寺觀建天長節祝壽道場。",
        "from": "T49n2035_052:0456b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅僧道遇千秋節。",
        "from": "T49n2035_052:0456b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開元寺行道散齋○德宗誕節。",
        "from": "T49n2035_052:0456b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔澄觀法師。",
        "from": "T49n2035_052:0456b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入內殿講經○文宗。",
        "from": "T49n2035_052:0456b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔聖節宰臣百僚詣寺設千僧齋○昭宗。",
        "from": "T49n2035_052:0456b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖節。",
        "from": "T49n2035_052:0456b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅兩街僧道。",
        "from": "T49n2035_052:0456b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入內殿談論○景宗聖節。",
        "from": "T49n2035_052:0456b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅寺觀設齋禁屠釣。",
        "from": "T49n2035_052:0456b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁太祖大明節。",
        "from": "T49n2035_052:0456b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅百官詣寺行香祝壽。",
        "from": "T49n2035_052:0456b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐莊宗聖節。",
        "from": "T49n2035_052:0456b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅僧錄雲辯與道士入內談論。",
        "from": "T49n2035_052:0456b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周太祖聖節。",
        "from": "T49n2035_052:0456b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宰臣百僚詣寺觀建祝壽道場。",
        "from": "T49n2035_052:0456b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋太祖長春節。",
        "from": "T49n2035_052:0456b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宰相范質製祝壽齋疏云云。",
        "from": "T49n2035_052:0456b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長春節。",
        "from": "T49n2035_052:0456b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔沙門殿試經律論義十條○欽宗詔道君聖節仍就道觀。",
        "from": "T49n2035_052:0456b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若乾龍節仍就佛寺。",
        "from": "T49n2035_052:0456b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一依祖宗舊法。",
        "from": "T49n2035_052:0456b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉孝武內殿奉佛。",
        "from": "T49n2035_052:0456b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召沙門居中行道。",
        "from": "T49n2035_052:0456b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐代宗。",
        "from": "T49n2035_052:0456b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅百沙門於禁中念誦。",
        "from": "T49n2035_052:0456b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之內道場○勅大明宮建道場。",
        "from": "T49n2035_052:0456b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感佛光現。",
        "from": "T49n2035_052:0456b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋太宗。",
        "from": "T49n2035_052:0456b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贊寧僧統入見滋福殿。",
        "from": "T49n2035_052:0456b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處安佛像經藏。",
        "from": "T49n2035_052:0456b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立剎聲鍾。",
        "from": "T49n2035_052:0456b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即內道場○詔兩街供奉僧於內殿建道場為民祈福○孝宗建內觀堂。",
        "from": "T49n2035_052:0456b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔上竺訥法師。",
        "from": "T49n2035_052:0456c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領五十僧入修金光明懺。",
        "from": "T49n2035_052:0456c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲以為常。",
        "from": "T49n2035_052:0456c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐睿宗。",
        "from": "T49n2035_052:0456c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅貴妃公主。",
        "from": "T49n2035_052:0456c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始建功德院○代宗詔輔相大臣。",
        "from": "T49n2035_052:0456c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始建功德院。",
        "from": "T49n2035_052:0456c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋徽宗。",
        "from": "T49n2035_052:0456c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅照祖宗舊法。",
        "from": "T49n2035_052:0456c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應勳臣戚里功德墳寺自造屋置田。",
        "from": "T49n2035_052:0456c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止賜額蠲免科敷。",
        "from": "T49n2035_052:0456c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽本家請住持。",
        "from": "T49n2035_052:0456c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許指占有額寺院○高宗。",
        "from": "T49n2035_052:0456c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "司諫陳公輔上疏。",
        "from": "T49n2035_052:0456c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應臣僚前曾陳乞有額寺院充墳寺功德者。",
        "from": "T49n2035_052:0456c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞照祖宗成法。",
        "from": "T49n2035_052:0456c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並與改正○理宗。",
        "from": "T49n2035_052:0456c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣僚言。",
        "from": "T49n2035_052:0456c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞將宰執指占有額寺院。",
        "from": "T49n2035_052:0456c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並與追正。",
        "from": "T49n2035_052:0456c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋孝武。",
        "from": "T49n2035_052:0456c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅文帝忌日。",
        "from": "T49n2035_052:0456c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中興寺建八關齋。",
        "from": "T49n2035_052:0456c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從臣袁敏孫更進魚肉。",
        "from": "T49n2035_052:0456c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝怒免官。",
        "from": "T49n2035_052:0456c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐太宗。",
        "from": "T49n2035_052:0456c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅先朝忌辰。",
        "from": "T49n2035_052:0456c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於章敬寺行香設齋中宗。",
        "from": "T49n2035_052:0456c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔七朝忌辰。",
        "from": "T49n2035_052:0456c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於內殿設齋行香○玄宗。",
        "from": "T49n2035_052:0456c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅僧道遇國忌。",
        "from": "T49n2035_052:0456c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就龍興寺行道散齋○宣宗。",
        "from": "T49n2035_052:0456c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅列聖忌辰。",
        "from": "T49n2035_052:0456c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並詣僧寺行香如舊典(時當武宗沙汰之後)○勅州郡國忌行香。",
        "from": "T49n2035_052:0456c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得携酒肉入寺。",
        "from": "T49n2035_052:0456c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉天福。",
        "from": "T49n2035_052:0456c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅國忌。",
        "from": "T49n2035_052:0456c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宰臣百僚詣寺行香飯僧。",
        "from": "T49n2035_052:0456c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋太宗。",
        "from": "T49n2035_052:0456c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔國忌。",
        "from": "T49n2035_052:0456c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宰相已下。",
        "from": "T49n2035_052:0456c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣寺觀行香禁腥酒。",
        "from": "T49n2035_052:0456c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸國朝貢",
        "from": "T49n2035_052:0456c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉武帝。",
        "from": "T49n2035_052:0456c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扶南國遣使。",
        "from": "T49n2035_052:0456c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進金佛象牙塔○安帝。",
        "from": "T49n2035_052:0456c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子國進玉佛像。",
        "from": "T49n2035_052:0456c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高四尺二寸。",
        "from": "T49n2035_052:0456c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋文帝。",
        "from": "T49n2035_052:0456c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦毘羅國。",
        "from": "T49n2035_052:0456c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子國。",
        "from": "T49n2035_052:0456c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訶羅陀國訶羅單國。",
        "from": "T49n2035_052:0456c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍婆國。",
        "from": "T49n2035_052:0456c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五國咸遣使入貢。",
        "from": "T49n2035_052:0456c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊東昏侯。",
        "from": "T49n2035_052:0456c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扶桑國僧惠深來京師。",
        "from": "T49n2035_052:0456c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁武帝。",
        "from": "T49n2035_052:0457a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于陀利國入貢云。",
        "from": "T49n2035_052:0457a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東土有聖王出○扶南國沙門進珊瑚佛像○盤盤國遣使進佛牙○丹丹國遣使進佛像○扶南國遣使朝貢。",
        "from": "T49n2035_052:0457a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請佛像經論○百濟國遣使朝貢請經論○于闐國遣使貢玉佛像。",
        "from": "T49n2035_052:0457a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐太宗。",
        "from": "T49n2035_052:0457a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高麗三國沙門僧願。",
        "from": "T49n2035_052:0457a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入中國學佛法。",
        "from": "T49n2035_052:0457a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德宗。",
        "from": "T49n2035_052:0457a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吐蕃遣使乞賜沙門善講佛理者。",
        "from": "T49n2035_052:0457a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上令良琇往赴。",
        "from": "T49n2035_052:0457a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋太祖。",
        "from": "T49n2035_052:0457a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高麗沙門諦觀。",
        "from": "T49n2035_052:0457a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持天台論疏。",
        "from": "T49n2035_052:0457a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至中國謁螺溪法師○高麗國君遣三十六僧來中國。",
        "from": "T49n2035_052:0457a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學永明壽禪師。",
        "from": "T49n2035_052:0457a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至今法眼一宗盛行海外○西天沙門可智等來朝○西天沙門蘇葛陀來貢佛舍利文殊華○西天沙門彌羅來貢梵經○于闐國沙門善名七人來○高昌國遣僧法淵。",
        "from": "T49n2035_052:0457a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貢辟支佛牙○太宗。",
        "from": "T49n2035_052:0457a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天沙門吉祥來進梵經○沙門繼縱自西天還。",
        "from": "T49n2035_052:0457a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貢梵經舍利塔○中天竺沙門鉢納摩來。",
        "from": "T49n2035_052:0457a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貢舍利塔○天竺沙門護羅來貢梵經○沙門光遠遊西天還。",
        "from": "T49n2035_052:0457a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進西竺王子表。",
        "from": "T49n2035_052:0457a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貢釋迦舍利○沙門法遇自西天還。",
        "from": "T49n2035_052:0457a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貢佛頂舍利梵經○沙門重達自西天還。",
        "from": "T49n2035_052:0457a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進佛舍利梵經○中天竺沙門補陀來。",
        "from": "T49n2035_052:0457a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進舍利梵經○占城國沙門淨戒詣闕貢金銅鈴杵○高麗國王遣使。",
        "from": "T49n2035_052:0457a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞賜大經藏御製佛乘文集。",
        "from": "T49n2035_052:0457a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔給○日本國沙門奝然來朝。",
        "from": "T49n2035_052:0457a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言其國傳襲六十四世。",
        "from": "T49n2035_052:0457a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋開皇中。",
        "from": "T49n2035_052:0457a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣使入中國求法華經。",
        "from": "T49n2035_052:0457a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐永徽四年。",
        "from": "T49n2035_052:0457a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣僧道照。",
        "from": "T49n2035_052:0457a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入中國從奘法師傳法(云云備在通塞志)。",
        "from": "T49n2035_052:0457a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奝然歸國。",
        "from": "T49n2035_052:0457a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞賜藏經。",
        "from": "T49n2035_052:0457a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔給○日本國法濟大師奝然。",
        "from": "T49n2035_052:0457b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣弟子嘉因祈乾來朝○真宗祥符九年。",
        "from": "T49n2035_052:0457b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北天竺沙門天覺。",
        "from": "T49n2035_052:0457b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺沙門妙德。",
        "from": "T49n2035_052:0457b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天竺沙門等。",
        "from": "T49n2035_052:0457b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各進舍利梵經。",
        "from": "T49n2035_052:0457b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中天竺沙門童壽來進梵經。",
        "from": "T49n2035_052:0457b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東天竺沙門普積來進梵經。",
        "from": "T49n2035_052:0457b04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一歲之中五竺咸貢○日本國沙門寂照來。",
        "from": "T49n2035_052:0457b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進無量壽佛像金字法華經○中天竺沙門儞尾抳來。",
        "from": "T49n2035_052:0457b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進舍利梵經○西天竺沙門佛護來進梵經○西天三藏法護來。",
        "from": "T49n2035_052:0457b07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進舍利梵經○北天沙門戒賢來進梵經○迦濕彌羅國沙門目羅失稽來進梵經○西天沙門達磨波來進梵經○西天沙門眾德來朝。",
        "from": "T49n2035_052:0457b09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進舍利梵經○中天竺沙門覺稱法戒來。",
        "from": "T49n2035_052:0457b12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進舍利梵經金剛座真容○般尼國沙門寂賢來進梵經○西天沙門知賢來。",
        "from": "T49n2035_052:0457b13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進舍利梵經○東女真國入貢。",
        "from": "T49n2035_052:0457b15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞賜藏經○西天沙門愛賢進舍利梵經○西天沙門智吉祥來進梵經○西夏國奏。",
        "from": "T49n2035_052:0457b15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國內新建伽藍。",
        "from": "T49n2035_052:0457b17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞賜藏經○神宗。",
        "from": "T49n2035_052:0457b18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本國沙門成尋來朝○哲宗。",
        "from": "T49n2035_052:0457b18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高麗王子僧統義天來朝。",
        "from": "T49n2035_052:0457b19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘇軾館伴。",
        "from": "T49n2035_052:0457b19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅楊傑送往錢唐。",
        "from": "T49n2035_052:0457b20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受法於源法師。",
        "from": "T49n2035_052:0457b20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳天台教於天竺諫法師。",
        "from": "T49n2035_052:0457b20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳律於靈芝照律師○孝宗。",
        "from": "T49n2035_052:0457b21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本國遣使致書。",
        "from": "T49n2035_052:0457b22_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明郡庭棲心維那對使宣讀。",
        "from": "T49n2035_052:0457b22_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斥其文義疎繆者。",
        "from": "T49n2035_052:0457b23_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡七處。",
        "from": "T49n2035_052:0457b23_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖統紀卷第五十二(終)",
        "from": "T49n2035_052:0457b24_0",
        "context_with_next_sentence": false
    }
]