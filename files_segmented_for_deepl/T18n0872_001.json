[
    {
        "source_sentence": "金剛頂瑜伽三十七尊出生義",
        "from": "T18n0872_001:0297c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進試鴻臚卿大興寺三藏沙門",
        "from": "T18n0872_001:0297c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智不空奉　詔譯",
        "from": "T18n0872_001:0297c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我能仁如來。",
        "from": "T18n0872_001:0297c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憫三有六趣之惑。",
        "from": "T18n0872_001:0297c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常由蘊界入等。",
        "from": "T18n0872_001:0297c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受生死妄執。",
        "from": "T18n0872_001:0297c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空華無而虛計。",
        "from": "T18n0872_001:0297c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣珠有而不知。",
        "from": "T18n0872_001:0297c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是乎收跡都史天宮下。",
        "from": "T18n0872_001:0297c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生中印土。",
        "from": "T18n0872_001:0297c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起化城以接之。",
        "from": "T18n0872_001:0297c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由糞除以誘之。",
        "from": "T18n0872_001:0297c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及乎大種姓人法緣已熟。",
        "from": "T18n0872_001:0297c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三祕密教說時方至。",
        "from": "T18n0872_001:0297c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂却住自受用身。",
        "from": "T18n0872_001:0297c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據色究竟天宮。",
        "from": "T18n0872_001:0297c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入不空王三昧。",
        "from": "T18n0872_001:0297c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普集諸聖賢。",
        "from": "T18n0872_001:0297c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "削地位之漸階。",
        "from": "T18n0872_001:0297c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開等妙之頓旨。",
        "from": "T18n0872_001:0297c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從普賢金剛性海。",
        "from": "T18n0872_001:0297c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出塵數加持色身。",
        "from": "T18n0872_001:0297c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後演普賢金剛語業之密言。",
        "from": "T18n0872_001:0297c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示普賢金剛身業之密印。",
        "from": "T18n0872_001:0297c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟普賢金剛意業之意慧。",
        "from": "T18n0872_001:0297c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成有情金剛三業之度門。",
        "from": "T18n0872_001:0297c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不達者。",
        "from": "T18n0872_001:0297c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為運動支節未殊於戲弄。",
        "from": "T18n0872_001:0297c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦文身更成計著。",
        "from": "T18n0872_001:0297c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安知夫入於此出於彼。",
        "from": "T18n0872_001:0297c26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用於淺成於深。",
        "from": "T18n0872_001:0297c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦由金剛手纔乘狻猊忽奮王趾。",
        "from": "T18n0872_001:0297c27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適按丘陵已平。",
        "from": "T18n0872_001:0297c28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不思議之源流。",
        "from": "T18n0872_001:0297c28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚非三賢四果之境界也。",
        "from": "T18n0872_001:0297c28_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈區區常情所能臆中哉。",
        "from": "T18n0872_001:0297c29_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得之者。",
        "from": "T18n0872_001:0298a01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即五根而入正受。",
        "from": "T18n0872_001:0298a01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就萬有而照大空。",
        "from": "T18n0872_001:0298a01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引佛界而普淨眾生。",
        "from": "T18n0872_001:0298a02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝群情而都會一智。",
        "from": "T18n0872_001:0298a02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以修行者。",
        "from": "T18n0872_001:0298a03_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先住相似則受加持力焉。",
        "from": "T18n0872_001:0298a03_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢薄者。",
        "from": "T18n0872_001:0298a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稍見於法明得三昧分焉。",
        "from": "T18n0872_001:0298a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深入者。",
        "from": "T18n0872_001:0298a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙了於空色。",
        "from": "T18n0872_001:0298a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有遍淨體焉。",
        "from": "T18n0872_001:0298a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃習氣蓋障廓然無餘矣。",
        "from": "T18n0872_001:0298a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則寂照本源業用皆辨。",
        "from": "T18n0872_001:0298a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法王自在義利平施。",
        "from": "T18n0872_001:0298a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然知諸正覺尊本來常住。",
        "from": "T18n0872_001:0298a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大菩提眾。",
        "from": "T18n0872_001:0298a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不會同。",
        "from": "T18n0872_001:0298a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道隔於我執。",
        "from": "T18n0872_001:0298a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘滯於空證。",
        "from": "T18n0872_001:0298a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近情失於取捨。",
        "from": "T18n0872_001:0298a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淺智惑於有無。",
        "from": "T18n0872_001:0298a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故是自破舟梁不可得而詣也。",
        "from": "T18n0872_001:0298a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如即爾普賢之心。",
        "from": "T18n0872_001:0298a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深入圓明之智。",
        "from": "T18n0872_001:0298a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是真言行菩薩。",
        "from": "T18n0872_001:0298a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造瑜伽之大方也。",
        "from": "T18n0872_001:0298a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後能堅固心菩提。",
        "from": "T18n0872_001:0298a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴心相開現心法藏。",
        "from": "T18n0872_001:0298a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就心神通。",
        "from": "T18n0872_001:0298a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂滅心戲論。",
        "from": "T18n0872_001:0298a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是發明知見成就眾生。",
        "from": "T18n0872_001:0298a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住相應門作諸佛事。",
        "from": "T18n0872_001:0298a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以由大圓鏡智。",
        "from": "T18n0872_001:0298a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厥有金剛平等現等覺身。",
        "from": "T18n0872_001:0298a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則塔中方東阿閦如來也。",
        "from": "T18n0872_001:0298a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由平等性智。",
        "from": "T18n0872_001:0298a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厥有義平等現等覺身。",
        "from": "T18n0872_001:0298a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即塔中方之南寶生如來也。",
        "from": "T18n0872_001:0298a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由妙觀察智。",
        "from": "T18n0872_001:0298a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厥有法平等現等覺身。",
        "from": "T18n0872_001:0298a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即塔中方之西阿彌陀如來也。",
        "from": "T18n0872_001:0298a18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由成所作智。",
        "from": "T18n0872_001:0298a19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厥有業平等現等覺身。",
        "from": "T18n0872_001:0298a19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即塔中方之北不空成就如來也。",
        "from": "T18n0872_001:0298a20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由四如來智。",
        "from": "T18n0872_001:0298a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生四波羅蜜菩薩焉。",
        "from": "T18n0872_001:0298a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋為三際一切諸聖賢生成養育之母。",
        "from": "T18n0872_001:0298a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是印成法界體性智自受用身。",
        "from": "T18n0872_001:0298a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即塔之正中毘盧舍那如來也。",
        "from": "T18n0872_001:0298a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四親近菩薩。",
        "from": "T18n0872_001:0298a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼四波羅蜜印焉。",
        "from": "T18n0872_001:0298a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量大悲體於是而生。",
        "from": "T18n0872_001:0298a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量方便擁護於是而出。",
        "from": "T18n0872_001:0298a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來菩提堅牢體。",
        "from": "T18n0872_001:0298a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛薩埵焉。",
        "from": "T18n0872_001:0298a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來菩提四攝體。",
        "from": "T18n0872_001:0298a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛王焉。",
        "from": "T18n0872_001:0298a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來菩提無染淨體。",
        "from": "T18n0872_001:0298a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛愛焉。",
        "from": "T18n0872_001:0298a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來隨所稱讚體。",
        "from": "T18n0872_001:0298a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛善哉焉。",
        "from": "T18n0872_001:0298a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則東方金剛威莊嚴界。",
        "from": "T18n0872_001:0298b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動如來四親近菩薩也。",
        "from": "T18n0872_001:0298b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來大戒忍辱波羅蜜之所成就焉。",
        "from": "T18n0872_001:0298b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由一切如來大莊嚴義。",
        "from": "T18n0872_001:0298b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛寶焉。",
        "from": "T18n0872_001:0298b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由一切如來大威耀義。",
        "from": "T18n0872_001:0298b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛日焉。",
        "from": "T18n0872_001:0298b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由一切如來大滿願義。",
        "from": "T18n0872_001:0298b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛幢焉。",
        "from": "T18n0872_001:0298b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由一切如來大歡樂義。",
        "from": "T18n0872_001:0298b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛笑焉。",
        "from": "T18n0872_001:0298b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即南方寶光明功德界。",
        "from": "T18n0872_001:0298b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶生如來四親近菩薩也。",
        "from": "T18n0872_001:0298b07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來無住檀那波羅蜜之所成就焉。",
        "from": "T18n0872_001:0298b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就一切如來自在無染智。",
        "from": "T18n0872_001:0298b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛法焉。",
        "from": "T18n0872_001:0298b09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就一切如來永斷習氣智。",
        "from": "T18n0872_001:0298b09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛利焉。",
        "from": "T18n0872_001:0298b10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就一切如來轉大法輪智。",
        "from": "T18n0872_001:0298b10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛因焉。",
        "from": "T18n0872_001:0298b11_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就一切如來離言說戲論智。",
        "from": "T18n0872_001:0298b11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛密語焉。",
        "from": "T18n0872_001:0298b12_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則西方大蓮華法藏界。",
        "from": "T18n0872_001:0298b12_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量壽如來四親近菩薩也。",
        "from": "T18n0872_001:0298b13_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來三摩地大慧波羅蜜之所成就焉。",
        "from": "T18n0872_001:0298b13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自一切如來善巧工藝門。",
        "from": "T18n0872_001:0298b14_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛業焉。",
        "from": "T18n0872_001:0298b15_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自一切如來大慈鎧冑門。",
        "from": "T18n0872_001:0298b15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛護焉。",
        "from": "T18n0872_001:0298b16_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自一切如來無畏調伏門。",
        "from": "T18n0872_001:0298b16_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛牙焉。",
        "from": "T18n0872_001:0298b17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自一切如來住持成就門。",
        "from": "T18n0872_001:0298b17_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛拳焉。",
        "from": "T18n0872_001:0298b18_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即北方變化輪作用界。",
        "from": "T18n0872_001:0298b18_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空成就如來四親近菩薩也。",
        "from": "T18n0872_001:0298b19_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來不捨眾生大精進波羅密之所成就焉。",
        "from": "T18n0872_001:0298b19_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是十六大士手之所持。",
        "from": "T18n0872_001:0298b21_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆本三摩地之幖幟也。",
        "from": "T18n0872_001:0298b21_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩物求義其何遠哉。",
        "from": "T18n0872_001:0298b22_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如遵眾生界入六度門。",
        "from": "T18n0872_001:0298b22_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則從一切如來體性海四智之中。",
        "from": "T18n0872_001:0298b23_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生金剛鉤索鎖鈴等四攝菩薩焉。",
        "from": "T18n0872_001:0298b23_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以能召請引持堅留歡喜之事。",
        "from": "T18n0872_001:0298b24_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切道場。",
        "from": "T18n0872_001:0298b25_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而奉諸教命。",
        "from": "T18n0872_001:0298b25_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人天得之。",
        "from": "T18n0872_001:0298b26_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而集解脫之眾。",
        "from": "T18n0872_001:0298b26_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖賢用之。",
        "from": "T18n0872_001:0298b26_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而接迷倒之流。",
        "from": "T18n0872_001:0298b26_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則塔之四門之外。",
        "from": "T18n0872_001:0298b27_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操其業用。",
        "from": "T18n0872_001:0298b27_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住位者是也。",
        "from": "T18n0872_001:0298b27_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由四菩薩智之所發起焉。",
        "from": "T18n0872_001:0298b28_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸聖人不得晏然。",
        "from": "T18n0872_001:0298b28_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於本所宮觀。",
        "from": "T18n0872_001:0298b29_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而疾甚覆掌。",
        "from": "T18n0872_001:0298b29_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以應群方之請也。",
        "from": "T18n0872_001:0298b29_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住真言修行者。",
        "from": "T18n0872_001:0298c01_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能入是三昧。",
        "from": "T18n0872_001:0298c01_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便能興此供養雲海。",
        "from": "T18n0872_001:0298c01_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成就自他利行焉。",
        "from": "T18n0872_001:0298c02_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則中方三十七尊之大義也。",
        "from": "T18n0872_001:0298c02_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此又住頂生三昧。",
        "from": "T18n0872_001:0298c03_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現頂生之身耳矣。",
        "from": "T18n0872_001:0298c04_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今塔之上方。",
        "from": "T18n0872_001:0298c04_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以獨有五輪王會者。",
        "from": "T18n0872_001:0298c04_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋以諸頂生身。",
        "from": "T18n0872_001:0298c05_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆攝入此無上五頂智焉。",
        "from": "T18n0872_001:0298c05_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如方不得而究者。",
        "from": "T18n0872_001:0298c06_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛之頂相也。",
        "from": "T18n0872_001:0298c06_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是至勝之法亦然。",
        "from": "T18n0872_001:0298c07_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得其際也。",
        "from": "T18n0872_001:0298c07_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故稱頂焉。",
        "from": "T18n0872_001:0298c07_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其五頂王又一切真言尊宰割之主也。",
        "from": "T18n0872_001:0298c08_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故稱王焉。",
        "from": "T18n0872_001:0298c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就五頂輪。",
        "from": "T18n0872_001:0298c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而金輪為之最。",
        "from": "T18n0872_001:0298c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不然孰知勝絕唯一法哉。",
        "from": "T18n0872_001:0298c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故自觀自在菩薩已下。",
        "from": "T18n0872_001:0298c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝怖歸命矣。",
        "from": "T18n0872_001:0298c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又下方有十六執金剛神。",
        "from": "T18n0872_001:0298c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋一切如來勇健菩提心所生化。",
        "from": "T18n0872_001:0298c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦明如來修行之時。",
        "from": "T18n0872_001:0298c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有塵數心障煩惱。",
        "from": "T18n0872_001:0298c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是金剛慧破之。",
        "from": "T18n0872_001:0298c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺之後。",
        "from": "T18n0872_001:0298c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成塵數種類智門。",
        "from": "T18n0872_001:0298c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是金剛慧用之。",
        "from": "T18n0872_001:0298c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故復現其暴惡可畏之身。",
        "from": "T18n0872_001:0298c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操大威之智。",
        "from": "T18n0872_001:0298c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以調伏難調。",
        "from": "T18n0872_001:0298c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叱吒則大千震盪。",
        "from": "T18n0872_001:0298c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指顧則群魔懾竄。",
        "from": "T18n0872_001:0298c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以鬼母怐懼而收跡。",
        "from": "T18n0872_001:0298c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象頭畏威而遠引。",
        "from": "T18n0872_001:0298c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼大惑之主摩醯首羅。",
        "from": "T18n0872_001:0298c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦蒙被其害而成正覺矣。",
        "from": "T18n0872_001:0298c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知向時憑怒。",
        "from": "T18n0872_001:0298c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適是大悲。",
        "from": "T18n0872_001:0298c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等金剛。",
        "from": "T18n0872_001:0298c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厥有河沙塵滴數量。",
        "from": "T18n0872_001:0298c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今舉十六住焉。",
        "from": "T18n0872_001:0298c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦塵數之義不出於是矣。",
        "from": "T18n0872_001:0298c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又其餘所有大士天人。",
        "from": "T18n0872_001:0298c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是隨類憙見之身。",
        "from": "T18n0872_001:0298c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而梯航於邪山苦海也。",
        "from": "T18n0872_001:0298c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦出於大日如來善巧業用門。",
        "from": "T18n0872_001:0298c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故此率堵婆。",
        "from": "T18n0872_001:0298c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂總領一乘之祕旨。",
        "from": "T18n0872_001:0298c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況權實之道於是全焉。",
        "from": "T18n0872_001:0298c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如普現色身等百千三昧。",
        "from": "T18n0872_001:0298c25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及四無量心饒益方便六波羅蜜運行次第。",
        "from": "T18n0872_001:0298c25_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至不起于座遊諸佛剎。",
        "from": "T18n0872_001:0298c26_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養承事利樂有情。",
        "from": "T18n0872_001:0298c27_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不可思議熏。",
        "from": "T18n0872_001:0298c27_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而密移眾生界。",
        "from": "T18n0872_001:0298c28_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是理用。",
        "from": "T18n0872_001:0298c28_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘修多羅。",
        "from": "T18n0872_001:0298c28_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或但有名目而無其法。",
        "from": "T18n0872_001:0298c29_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於作用。",
        "from": "T18n0872_001:0298c29_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌皆備。",
        "from": "T18n0872_001:0298c29_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此教門既諸大乘故。",
        "from": "T18n0872_001:0299a01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難其授受。",
        "from": "T18n0872_001:0299a01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法阿闍梨。",
        "from": "T18n0872_001:0299a01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱擇得其器。",
        "from": "T18n0872_001:0299a02_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必授以菩薩性戒。",
        "from": "T18n0872_001:0299a02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入以大會法壇。",
        "from": "T18n0872_001:0299a02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取金剛界賢聖。",
        "from": "T18n0872_001:0299a03_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝持金剛乘甘露灌頂。",
        "from": "T18n0872_001:0299a03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後示以入佛心閫閾焉。",
        "from": "T18n0872_001:0299a04_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或不如此。",
        "from": "T18n0872_001:0299a04_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則受行者無利。",
        "from": "T18n0872_001:0299a05_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳度者獲罪。",
        "from": "T18n0872_001:0299a05_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故自佛已降。",
        "from": "T18n0872_001:0299a05_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迭相付囑。",
        "from": "T18n0872_001:0299a06_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋師子得於毘盧舍那如來方授。",
        "from": "T18n0872_001:0299a06_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而誓約傳金剛薩埵。",
        "from": "T18n0872_001:0299a07_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵得之。",
        "from": "T18n0872_001:0299a07_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數百年傳龍猛菩薩。",
        "from": "T18n0872_001:0299a07_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍猛菩薩受之。",
        "from": "T18n0872_001:0299a08_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數百年傳龍智阿闍梨。",
        "from": "T18n0872_001:0299a08_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又住持數百年。",
        "from": "T18n0872_001:0299a09_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳金剛智阿闍梨。",
        "from": "T18n0872_001:0299a09_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛智阿闍梨以悲願力。",
        "from": "T18n0872_001:0299a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將流演於中國。",
        "from": "T18n0872_001:0299a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂挈瓶杖錫。",
        "from": "T18n0872_001:0299a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開元七載至自上京。",
        "from": "T18n0872_001:0299a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四載遽得其人。",
        "from": "T18n0872_001:0299a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以誓約傳不空金剛阿闍梨。",
        "from": "T18n0872_001:0299a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後其枝條付囑。",
        "from": "T18n0872_001:0299a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗有其人。",
        "from": "T18n0872_001:0299a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若冢嶠相承。",
        "from": "T18n0872_001:0299a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准此而已。",
        "from": "T18n0872_001:0299a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按本教。",
        "from": "T18n0872_001:0299a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有得斯灌頂者。",
        "from": "T18n0872_001:0299a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵恒住其身心。",
        "from": "T18n0872_001:0299a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而藩屏心王。",
        "from": "T18n0872_001:0299a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使至乎道。",
        "from": "T18n0872_001:0299a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖未證入。",
        "from": "T18n0872_001:0299a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是從法生。",
        "from": "T18n0872_001:0299a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得膺金剛名。",
        "from": "T18n0872_001:0299a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已墮菩薩數。",
        "from": "T18n0872_001:0299a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有觸視之者。",
        "from": "T18n0872_001:0299a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為菩提因觀焉。",
        "from": "T18n0872_001:0299a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛頂瑜伽三十七尊出生義",
        "from": "T18n0872_001:0299a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈雲校本末云。",
        "from": "T18n0872_001:0299a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞享三年五月初朔校之了",
        "from": "T18n0872_001:0299a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同二十四日再校了",
        "from": "T18n0872_001:0299a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行本文字多譌冀得善本正之淨嚴(四十八)",
        "from": "T18n0872_001:0299a22_0",
        "context_with_next_sentence": false
    }
]