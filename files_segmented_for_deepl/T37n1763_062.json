[
    {
        "source_sentence": "大般涅槃經集解卷第六十二",
        "from": "T37n1763_062:0570b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　舉盲人說象譬",
        "from": "T37n1763_062:0570b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　明佛性不即六法不離六法義",
        "from": "T37n1763_062:0570b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　明佛性十二因緣信等",
        "from": "T37n1763_062:0570b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　辨菩薩不退相日食一麻一豆等事",
        "from": "T37n1763_062:0570b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　出菩薩以身施眾生發願事",
        "from": "T37n1763_062:0570b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　出菩薩為眾生受苦不退事",
        "from": "T37n1763_062:0570b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　出天海八種不思議譬",
        "from": "T37n1763_062:0570b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼品之第九",
        "from": "T37n1763_062:0570b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子譬如有王告一大臣(至)以是故說色為佛性。",
        "from": "T37n1763_062:0570b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0570b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0570b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各以手觸者。",
        "from": "T37n1763_062:0570b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬聞見也。",
        "from": "T37n1763_062:0570b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同不說象體。",
        "from": "T37n1763_062:0570b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏見非象。",
        "from": "T37n1763_062:0570b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非不說者。",
        "from": "T37n1763_062:0570b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各得其分。",
        "from": "T37n1763_062:0570b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非不說也。",
        "from": "T37n1763_062:0570b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色是佛性者。",
        "from": "T37n1763_062:0570b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正因性異。",
        "from": "T37n1763_062:0570b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成果亦異。",
        "from": "T37n1763_062:0570b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偏著為失也。",
        "from": "T37n1763_062:0570c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金色是一槃蛇為異也。",
        "from": "T37n1763_062:0570c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_062:0570c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二翻也。",
        "from": "T37n1763_062:0570c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明如來說性不同。",
        "from": "T37n1763_062:0570c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫既真而無謬。",
        "from": "T37n1763_062:0570c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故應修也。",
        "from": "T37n1763_062:0570c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王者譬佛。",
        "from": "T37n1763_062:0570c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣者譬常住經教。",
        "from": "T37n1763_062:0570c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象譬教下理也。",
        "from": "T37n1763_062:0570c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盲者隨所觸而說象。",
        "from": "T37n1763_062:0570c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生無慧。",
        "from": "T37n1763_062:0570c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃計陰說我也。",
        "from": "T37n1763_062:0570c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說離陰有我者。",
        "from": "T37n1763_062:0570c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此計太過。",
        "from": "T37n1763_062:0570c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下當非之也。",
        "from": "T37n1763_062:0570c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非即六法。",
        "from": "T37n1763_062:0570c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離六法者。",
        "from": "T37n1763_062:0570c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五陰成假名人。",
        "from": "T37n1763_062:0570c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性在果。",
        "from": "T37n1763_062:0570c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈即六法非因。",
        "from": "T37n1763_062:0570c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無以感果。",
        "from": "T37n1763_062:0570c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言不離也。",
        "from": "T37n1763_062:0570c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_062:0570c08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盲人觸象。",
        "from": "T37n1763_062:0570c08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一一而望。",
        "from": "T37n1763_062:0570c08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得象體。",
        "from": "T37n1763_062:0570c09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然復不得離此而有象也。",
        "from": "T37n1763_062:0570c09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道凡夫。",
        "from": "T37n1763_062:0570c09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捉五陰及離陰。",
        "from": "T37n1763_062:0570c10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一計非佛性。",
        "from": "T37n1763_062:0570c10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然始終不離此六法也。",
        "from": "T37n1763_062:0570c10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸外道。",
        "from": "T37n1763_062:0570c11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖說有我。",
        "from": "T37n1763_062:0570c11_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而實無我者。",
        "from": "T37n1763_062:0570c11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破第六別計五陰外有我。",
        "from": "T37n1763_062:0570c12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂五陰假合。",
        "from": "T37n1763_062:0570c12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為眾生。",
        "from": "T37n1763_062:0570c13_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無別五陰外有我也。",
        "from": "T37n1763_062:0570c13_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有說言受是佛性(至)乃至非我不離我。",
        "from": "T37n1763_062:0570c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0570c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0570c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上舉色。",
        "from": "T37n1763_062:0570c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今舉心歷心。",
        "from": "T37n1763_062:0570c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱四陰也。",
        "from": "T37n1763_062:0570c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子有諸外道雖說有我(至)第一義空故名佛性。",
        "from": "T37n1763_062:0570c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0570c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0570c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就惑情為離也。",
        "from": "T37n1763_062:0570c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故是即陰我相續不斷耳。",
        "from": "T37n1763_062:0570c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後還正之。",
        "from": "T37n1763_062:0570c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂離陰別我也。",
        "from": "T37n1763_062:0570c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子大慈大悲名為佛性(至)佛性者即是如來。",
        "from": "T37n1763_062:0570c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0570c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0570c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說緣因性。",
        "from": "T37n1763_062:0570c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生必得。",
        "from": "T37n1763_062:0570c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名有也。",
        "from": "T37n1763_062:0570c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相續不異。",
        "from": "T37n1763_062:0570c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如來也。",
        "from": "T37n1763_062:0570c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_062:0570c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三出佛性體也。",
        "from": "T37n1763_062:0570c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_062:0570c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四歷緣因四無量行。",
        "from": "T37n1763_062:0570c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是緣因。",
        "from": "T37n1763_062:0570c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善菩薩常行。",
        "from": "T37n1763_062:0570c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如影隨形也。",
        "from": "T37n1763_062:0570c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性名如來者。",
        "from": "T37n1763_062:0570c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行四無量。",
        "from": "T37n1763_062:0570c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近得初住一字之地。",
        "from": "T37n1763_062:0570c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠則圓滿得佛。",
        "from": "T37n1763_062:0570c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名如來也。",
        "from": "T37n1763_062:0570c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性者名大信心(至)一切眾生悉有佛性。",
        "from": "T37n1763_062:0570c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0570c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0570c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉六法門。",
        "from": "T37n1763_062:0570c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "助顯其旨也。",
        "from": "T37n1763_062:0570c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如上所說種種諸法(至)一切眾生悉有佛性。",
        "from": "T37n1763_062:0570c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0570c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0570c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總結上旨也。",
        "from": "T37n1763_062:0570c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若說色是佛性者(至)乃至說識亦復如是。",
        "from": "T37n1763_062:0571a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說色是佛性。",
        "from": "T37n1763_062:0571a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘非者。",
        "from": "T37n1763_062:0571a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耶見眾生。",
        "from": "T37n1763_062:0571a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞必起倒也。",
        "from": "T37n1763_062:0571a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若諸眾生了佛性者(至)兼復讚歎禮拜問說。",
        "from": "T37n1763_062:0571a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既勸修此經名。",
        "from": "T37n1763_062:0571a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說修者之福也。",
        "from": "T37n1763_062:0571a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_062:0571a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四正勸修也。",
        "from": "T37n1763_062:0571a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_062:0571a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五結勸。",
        "from": "T37n1763_062:0571a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明應須修道之意也。",
        "from": "T37n1763_062:0571a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若有已於過去無量(至)然後乃得聞是經名。",
        "from": "T37n1763_062:0571a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎修者之因也。",
        "from": "T37n1763_062:0571a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子佛性不可思議(至)大涅槃經亦不可思議。",
        "from": "T37n1763_062:0571a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎三寶佛性經法不可議。",
        "from": "T37n1763_062:0571a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯勸修之旨不虛也。",
        "from": "T37n1763_062:0571a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼菩薩言世尊(至)得阿耨多羅三藐三菩提。",
        "from": "T37n1763_062:0571a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼領。",
        "from": "T37n1763_062:0571a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并敘時眾得利益。",
        "from": "T37n1763_062:0571a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即印述也。",
        "from": "T37n1763_062:0571a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼言世尊云何不退(至)阿耨多羅三藐三菩提。",
        "from": "T37n1763_062:0571a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_062:0571a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下修道之第七也。",
        "from": "T37n1763_062:0571a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向以有性故。",
        "from": "T37n1763_062:0571a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以勸修。",
        "from": "T37n1763_062:0571a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言修行者。",
        "from": "T37n1763_062:0571a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功業轉深。",
        "from": "T37n1763_062:0571a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復退轉。",
        "from": "T37n1763_062:0571a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不能深識經旨。",
        "from": "T37n1763_062:0571a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "者則有退轉也。",
        "from": "T37n1763_062:0571a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此苦行。",
        "from": "T37n1763_062:0571a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多是住前。",
        "from": "T37n1763_062:0571a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言因經修行。",
        "from": "T37n1763_062:0571a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無利益事。",
        "from": "T37n1763_062:0571a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚為之。",
        "from": "T37n1763_062:0571a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈況有益。",
        "from": "T37n1763_062:0571a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而當不為此。",
        "from": "T37n1763_062:0571a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明人於經修行。",
        "from": "T37n1763_062:0571a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其理味。",
        "from": "T37n1763_062:0571a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不復退也。",
        "from": "T37n1763_062:0571a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_062:0571a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下修道之第七。",
        "from": "T37n1763_062:0571a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正出修道人相。",
        "from": "T37n1763_062:0571a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來雖勸其修道。",
        "from": "T37n1763_062:0571a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸人咸然。",
        "from": "T37n1763_062:0571a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知修道之法。",
        "from": "T37n1763_062:0571a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛今略示其相。",
        "from": "T37n1763_062:0571a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能作如此苦行者是也。",
        "from": "T37n1763_062:0571a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子菩薩摩訶薩(至)是名不退菩提之相。",
        "from": "T37n1763_062:0571a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七不退相門也。",
        "from": "T37n1763_062:0571a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修道必生死。",
        "from": "T37n1763_062:0571a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但生死多難。",
        "from": "T37n1763_062:0571a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能自知退與不退。",
        "from": "T37n1763_062:0571a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次辨不退相也。",
        "from": "T37n1763_062:0571a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子菩薩摩訶薩(至)是故復名不可思議。",
        "from": "T37n1763_062:0571b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八歎不退菩薩。",
        "from": "T37n1763_062:0571b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不思議德也。",
        "from": "T37n1763_062:0571b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受後邊身者。",
        "from": "T37n1763_062:0571b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上說具煩惱性地解地。",
        "from": "T37n1763_062:0571b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今說後身義其始終。",
        "from": "T37n1763_062:0571b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但舉其兩端耳。",
        "from": "T37n1763_062:0571b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_062:0571b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八明上地菩薩。",
        "from": "T37n1763_062:0571b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備諸勝德也。",
        "from": "T37n1763_062:0571b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_062:0571b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎修道人之德也。",
        "from": "T37n1763_062:0571b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人謂苦不可忍。",
        "from": "T37n1763_062:0571b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今云。",
        "from": "T37n1763_062:0571b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能立心修道。",
        "from": "T37n1763_062:0571b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖為眾生受苦。",
        "from": "T37n1763_062:0571b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如三禪樂也。",
        "from": "T37n1763_062:0571b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子大涅槃經亦復如是(至)彼大海有八不思議。",
        "from": "T37n1763_062:0571b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九歎經。",
        "from": "T37n1763_062:0571b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛及菩薩。",
        "from": "T37n1763_062:0571b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德智慧。",
        "from": "T37n1763_062:0571b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經實其本。",
        "from": "T37n1763_062:0571b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故讚歎也。",
        "from": "T37n1763_062:0571b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_062:0571b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上言人由經益。",
        "from": "T37n1763_062:0571b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則經有資成人義。",
        "from": "T37n1763_062:0571b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次歎也。",
        "from": "T37n1763_062:0571b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_062:0571b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海有八德。",
        "from": "T37n1763_062:0571b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以譬經也。",
        "from": "T37n1763_062:0571b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者因眾生之福海則漸深。",
        "from": "T37n1763_062:0571b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生有感。",
        "from": "T37n1763_062:0571b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以經教次第。",
        "from": "T37n1763_062:0571b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從淺至深也。",
        "from": "T37n1763_062:0571b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二逐風而行。",
        "from": "T37n1763_062:0571b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩。",
        "from": "T37n1763_062:0571b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣而化也。",
        "from": "T37n1763_062:0571b14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三河水入者。",
        "from": "T37n1763_062:0571b14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明涅槃納眾命之器也。",
        "from": "T37n1763_062:0571b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下去類爾也。",
        "from": "T37n1763_062:0571b15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼言世尊若言如來(至)云何獨令我受化身。",
        "from": "T37n1763_062:0571b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十歎佛也。",
        "from": "T37n1763_062:0571b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以經典佛說理應歎也。",
        "from": "T37n1763_062:0571b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但說由慈生。",
        "from": "T37n1763_062:0571b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故先問也。",
        "from": "T37n1763_062:0571b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_062:0571b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四生之中。",
        "from": "T37n1763_062:0571b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化生最勝。",
        "from": "T37n1763_062:0571b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而佛為眾生。",
        "from": "T37n1763_062:0571b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故胎生。",
        "from": "T37n1763_062:0571b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩德之重。",
        "from": "T37n1763_062:0571b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以致歎也。",
        "from": "T37n1763_062:0571b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時師子吼菩薩合掌長跪右膝著地以偈讚佛。",
        "from": "T37n1763_062:0571b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_062:0571b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來是王化之主道被蒼生。",
        "from": "T37n1763_062:0571b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以最後興歎也。",
        "from": "T37n1763_062:0571b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來無量功德聚(至)能吼無量師子吼。",
        "from": "T37n1763_062:0571b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_062:0571b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_062:0571b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼國以偈為詠歌也。",
        "from": "T37n1763_062:0571b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋盛德之至道也。",
        "from": "T37n1763_062:0571b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第六十二",
        "from": "T37n1763_062:0571b26_0",
        "context_with_next_sentence": false
    }
]