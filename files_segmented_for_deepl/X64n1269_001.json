[
    {
        "source_sentence": "住鼎州梁山廓庵和尚十牛圖頌(并)序夫諸佛真源。",
        "from": "X64n1269_001:0773b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生本有。",
        "from": "X64n1269_001:0773b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因迷也沈淪三界。",
        "from": "X64n1269_001:0773b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因悟也頓出四生。",
        "from": "X64n1269_001:0773b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以有諸佛而可成。",
        "from": "X64n1269_001:0773b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有眾生而可作。",
        "from": "X64n1269_001:0773b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故先賢悲憫。",
        "from": "X64n1269_001:0773b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣設多途。",
        "from": "X64n1269_001:0773b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理出偏圓。",
        "from": "X64n1269_001:0773b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教興頓漸。",
        "from": "X64n1269_001:0773b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從麤及細。",
        "from": "X64n1269_001:0773b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自淺至深。",
        "from": "X64n1269_001:0773b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末後目瞬青蓮。",
        "from": "X64n1269_001:0773b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引得頭陀微笑。",
        "from": "X64n1269_001:0773b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法眼藏自此流通天上人間。",
        "from": "X64n1269_001:0773b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方他界。",
        "from": "X64n1269_001:0773b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其理也。",
        "from": "X64n1269_001:0773b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超宗越格。",
        "from": "X64n1269_001:0773b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鳥道而無蹤跡。",
        "from": "X64n1269_001:0773b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其事也。",
        "from": "X64n1269_001:0773b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滯句迷言。",
        "from": "X64n1269_001:0773b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若靈龜而曳尾。",
        "from": "X64n1269_001:0773b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間有清居禪師。",
        "from": "X64n1269_001:0773b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀眾生之根器。",
        "from": "X64n1269_001:0773b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應病施方。",
        "from": "X64n1269_001:0773b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作牧牛以為圖。",
        "from": "X64n1269_001:0773b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨機設教。",
        "from": "X64n1269_001:0773b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初從漸白。",
        "from": "X64n1269_001:0773b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯力量之未充。",
        "from": "X64n1269_001:0773b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次至純真。",
        "from": "X64n1269_001:0773b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表根機之漸照。",
        "from": "X64n1269_001:0773b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至人牛不見故。",
        "from": "X64n1269_001:0773b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標心法雙亡。",
        "from": "X64n1269_001:0773b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其理也。",
        "from": "X64n1269_001:0773b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已盡根源。",
        "from": "X64n1269_001:0773b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其法也。",
        "from": "X64n1269_001:0773b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚存莎笠。",
        "from": "X64n1269_001:0773b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂使淺根疑悞。",
        "from": "X64n1269_001:0773b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中下紛紜。",
        "from": "X64n1269_001:0773b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或疑之落空亡也。",
        "from": "X64n1269_001:0773b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或喚作墮常見。",
        "from": "X64n1269_001:0773b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今觀則公禪師。",
        "from": "X64n1269_001:0773b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擬前賢之模範。",
        "from": "X64n1269_001:0773b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出自己之胷襟。",
        "from": "X64n1269_001:0773b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十頌佳篇。",
        "from": "X64n1269_001:0773b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交光相映。",
        "from": "X64n1269_001:0773b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初從失處。",
        "from": "X64n1269_001:0773b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終至還源。",
        "from": "X64n1269_001:0773b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善應群機。",
        "from": "X64n1269_001:0773b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如救飢渴。",
        "from": "X64n1269_001:0773b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈遠是以探尋妙義。",
        "from": "X64n1269_001:0773b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採拾玄微。",
        "from": "X64n1269_001:0773b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水母以尋飡。",
        "from": "X64n1269_001:0773b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依海蝦而為目。",
        "from": "X64n1269_001:0773b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初自尋牛。",
        "from": "X64n1269_001:0773b22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終至入鄽。",
        "from": "X64n1269_001:0773b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強起波瀾。",
        "from": "X64n1269_001:0773b22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫生頭角。",
        "from": "X64n1269_001:0773b22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚無心而可覓。",
        "from": "X64n1269_001:0773b22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有牛而可尋。",
        "from": "X64n1269_001:0773b23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泊至入廛。",
        "from": "X64n1269_001:0773b23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是何魔魅。",
        "from": "X64n1269_001:0773b23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況是祖禰不了。",
        "from": "X64n1269_001:0773b23_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殃及兒孫。",
        "from": "X64n1269_001:0773b24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不揆荒唐。",
        "from": "X64n1269_001:0773b24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試為提唱。",
        "from": "X64n1269_001:0773b24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋牛序一",
        "from": "X64n1269_001:0773c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從來不失。",
        "from": "X64n1269_001:0773c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何用追尋。",
        "from": "X64n1269_001:0773c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由背覺以成疎。",
        "from": "X64n1269_001:0773c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在向塵而遂失。",
        "from": "X64n1269_001:0773c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家山漸遠。",
        "from": "X64n1269_001:0773c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岐路俄差。",
        "from": "X64n1269_001:0773c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得失熾然。",
        "from": "X64n1269_001:0773c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是非鋒起。",
        "from": "X64n1269_001:0773c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0773c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　忙忙撥草去追尋　　水闊山遙路更深　力盡神疲無處覔　　但聞楓樹晚蟬吟和石皷夷和尚。",
        "from": "X64n1269_001:0773c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　只管區區后外尋　　不知脚底已泥深　幾迴芳草斜陽裏　　一曲新豐空自吟又壞衲璉和尚。",
        "from": "X64n1269_001:0773c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　本無蹤跡是誰尋　　誤入烟蘿深處深　手把鼻頭同歸客　　水邊林下自沈吟見跡序二依經解義。",
        "from": "X64n1269_001:0773c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱教知蹤。",
        "from": "X64n1269_001:0773c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明眾器為一金。",
        "from": "X64n1269_001:0773c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體萬物為自己。",
        "from": "X64n1269_001:0773c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正邪不辯。",
        "from": "X64n1269_001:0773c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真偽奚分。",
        "from": "X64n1269_001:0773c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未入斯門。",
        "from": "X64n1269_001:0773c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權為見跡。",
        "from": "X64n1269_001:0773c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0773c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　水邊林下跡偏多　　芳章離披見也麼　縱是深山更深處　　遼天鼻孔怎藏他和。",
        "from": "X64n1269_001:0773c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　枯木巖前差路多　　草窠裏輥覺非麼　脚跟若也隨他去　　未免當頭蹉過他又。",
        "from": "X64n1269_001:0773c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見牛人少覔牛多　　山北山南見也麼　明暗一條來去路　　箇中認取別無他見牛序三從聲得入。",
        "from": "X64n1269_001:0773c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見處逢原。",
        "from": "X64n1269_001:0773c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根門著著無差。",
        "from": "X64n1269_001:0773c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動用中頭頭。",
        "from": "X64n1269_001:0773c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯露。",
        "from": "X64n1269_001:0774a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水中鹽味。",
        "from": "X64n1269_001:0774a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色裏膠青。",
        "from": "X64n1269_001:0774a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眨上眉毛。",
        "from": "X64n1269_001:0774a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非是他物。",
        "from": "X64n1269_001:0774a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0774a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　黃鸝枝上一聲聲　　日暖風和岸柳青　只此更無回避處　　森森頭角畫難成和。",
        "from": "X64n1269_001:0774a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　識得形容認得聲　　戴崧從此妙丹青　徹頭徹尾渾相似　　子細看來未十成又。",
        "from": "X64n1269_001:0774a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　驀地相逢見面呈　　此牛非白亦非青　點頭自許微微笑　　一段風光畫不成得牛序四久埋郊外。",
        "from": "X64n1269_001:0774a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日逢渠。",
        "from": "X64n1269_001:0774a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由境勝以難追。",
        "from": "X64n1269_001:0774a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戀芳叢而不已。",
        "from": "X64n1269_001:0774a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頑心尚勇。",
        "from": "X64n1269_001:0774a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "野性猶存。",
        "from": "X64n1269_001:0774a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得純和。",
        "from": "X64n1269_001:0774a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必加鞭楚。",
        "from": "X64n1269_001:0774a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0774a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　竭盡神通獲得渠　　心強力壯卒難除　有時纔到高原上　　又入烟雲深處居和。",
        "from": "X64n1269_001:0774a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　牢把繩頭莫放渠　　幾多毛病未曾除　徐徐驀鼻牽將去　　且要迴頭識舊居又。",
        "from": "X64n1269_001:0774a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　芳草連天捉得渠　　鼻頭繩索未全除　分明照見歸家路　　綠水青山暫寄居牧牛序五前思纔起。",
        "from": "X64n1269_001:0774a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後念相隨。",
        "from": "X64n1269_001:0774a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由覺故以成真。",
        "from": "X64n1269_001:0774a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在迷故而為妄。",
        "from": "X64n1269_001:0774a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不唯由境有。",
        "from": "X64n1269_001:0774a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟自心生。",
        "from": "X64n1269_001:0774a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻索牢牽。",
        "from": "X64n1269_001:0774a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不容擬議。",
        "from": "X64n1269_001:0774a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0774a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　鞭索時時不離身　　恐伊縱步入埃塵　相將牧得純和也　　羈鎻無抑自逐人和。",
        "from": "X64n1269_001:0774b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　共分山林寄此身　　有時亦踏馬蹄塵　不曾犯者人苗稼　　來往空勞背上人又。",
        "from": "X64n1269_001:0774b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　牧來純熟自通身　　雖在塵中不染塵　弄來却得蹉跎力　　林下相進笑殺人騎牛歸家序六干戈已罷。",
        "from": "X64n1269_001:0774b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得失還無。",
        "from": "X64n1269_001:0774b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱樵子之村歌。",
        "from": "X64n1269_001:0774b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吹兒童之野曲。",
        "from": "X64n1269_001:0774b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫身牛上。",
        "from": "X64n1269_001:0774b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目視雲霄。",
        "from": "X64n1269_001:0774b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼喚不回。",
        "from": "X64n1269_001:0774b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撈籠不住。",
        "from": "X64n1269_001:0774b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0774b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　騎牛迤邐欲還家　　羗笛聲聲送晚霞　一拍一歌無限意　　知音何必鼓唇牙和。",
        "from": "X64n1269_001:0774b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　指點前坡即是家　　旋吹桐角出烟霞　忽然變作還鄉曲　　未必知音肯伯牙又。",
        "from": "X64n1269_001:0774b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　倒騎得得自歸家　　篛笠簑衣帶晚霞　步步清風行處穩　　不將寸草挂唇牙忘牛存人序七法無二法。",
        "from": "X64n1269_001:0774b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛目為宗。",
        "from": "X64n1269_001:0774b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻蹄兔之異名。",
        "from": "X64n1269_001:0774b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯筌魚之差別。",
        "from": "X64n1269_001:0774b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金出鑛。",
        "from": "X64n1269_001:0774b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似月離雲。",
        "from": "X64n1269_001:0774b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一道寒光。",
        "from": "X64n1269_001:0774b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威音劫外。",
        "from": "X64n1269_001:0774b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0774b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　騎牛已得到家山　　牛也空兮人也閑　紅日三竿猶作夢　　鞭繩空頓草堂間和。",
        "from": "X64n1269_001:0774b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欄內無牛趂出山　　烟簑雨笠亦空閑　行歌行樂無拘繫　　贏得一身天地間又。",
        "from": "X64n1269_001:0774c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸來何處不家山　　物我相忘鎮日閑　須信通玄峰頂上　　箇中渾不類人間人牛俱忘序八凡情脫落。",
        "from": "X64n1269_001:0774c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖意皆空。",
        "from": "X64n1269_001:0774c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛處不用遨遊。",
        "from": "X64n1269_001:0774c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無佛處急須。",
        "from": "X64n1269_001:0774c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "走過。",
        "from": "X64n1269_001:0774c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩頭不著。",
        "from": "X64n1269_001:0774c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千眼難窺。",
        "from": "X64n1269_001:0774c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百鳥含花。",
        "from": "X64n1269_001:0774c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一場懡[怡台+羅]。",
        "from": "X64n1269_001:0774c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0774c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　鞭索人牛盡屬空　　碧天寥廓信難通　紅爐焰上爭容雪　　到此方能合祖宗和。",
        "from": "X64n1269_001:0774c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慚愧眾生界已空　　箇中消息若為通　後無來若前無去　　未審憑誰繼此宗又。",
        "from": "X64n1269_001:0774c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一鎚擊碎太虗空　　凡情無蹤路不通　明月堂前風颯颯　　百川無水不朝宗返本還源序九本來清淨。",
        "from": "X64n1269_001:0774c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不受一塵。",
        "from": "X64n1269_001:0774c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀有相之榮枯。",
        "from": "X64n1269_001:0774c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處無為之凝寂。",
        "from": "X64n1269_001:0774c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不同幻化。",
        "from": "X64n1269_001:0774c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈假修治。",
        "from": "X64n1269_001:0774c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水綠山青。",
        "from": "X64n1269_001:0774c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐觀成敗。",
        "from": "X64n1269_001:0774c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0774c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　返本還源已費功　　爭如直下若盲聾　庵中不見庵前物　　水自茫茫花自紅和。",
        "from": "X64n1269_001:0774c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　靈機不隨有無功　　見色聞聲豈用聾　昨夜金烏飛入海　　曉天依舊一輪紅又。",
        "from": "X64n1269_001:0775a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　用盡機關費盡功　　惺惺底事不如聾　草鞋根斷來時路　　百鳥不啼花亂紅入鄽垂手序十柴門獨掩。",
        "from": "X64n1269_001:0775a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千聖不知。",
        "from": "X64n1269_001:0775a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "埋自己之風光。",
        "from": "X64n1269_001:0775a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "負前賢之途轍。",
        "from": "X64n1269_001:0775a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提瓢入市。",
        "from": "X64n1269_001:0775a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "策杖還家。",
        "from": "X64n1269_001:0775a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酒肆魚行。",
        "from": "X64n1269_001:0775a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化令成佛。",
        "from": "X64n1269_001:0775a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "X64n1269_001:0775a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　露胷跣足入廛來　　抹土塗灰笑滿腮　不用神仙真祕訣　　直教枯木放花開和。",
        "from": "X64n1269_001:0775a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　者漢親從異類來　　分明馬面與驢腮　一揮鐵棒如風疾　　萬戶千門盡擊開又。",
        "from": "X64n1269_001:0775a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　袖裏金鎚劈面來　　胡言漢語笑盈腮　相逢若解不相識　　樓閣門庭八字開十牛圖頌(終)",
        "from": "X64n1269_001:0775a15_0",
        "context_with_next_sentence": false
    }
]