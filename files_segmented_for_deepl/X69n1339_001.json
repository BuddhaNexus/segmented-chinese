[
    {
        "source_sentence": " 滁州琅邪山覺和尚中後四錄",
        "from": "X69n1339_001:0197b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參學門人　用孫　序",
        "from": "X69n1339_001:0197b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫宗師之出世居方者。",
        "from": "X69n1339_001:0197b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抑而為之。",
        "from": "X69n1339_001:0197b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提綱振維者。",
        "from": "X69n1339_001:0197b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋不得已。",
        "from": "X69n1339_001:0197b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖以應其羣心之所來。",
        "from": "X69n1339_001:0197b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而大抵之得人者。",
        "from": "X69n1339_001:0197b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其在茲乎。",
        "from": "X69n1339_001:0197b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故我琅邪禪師之出化也。",
        "from": "X69n1339_001:0197b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四海雲奔。",
        "from": "X69n1339_001:0197b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所不至。",
        "from": "X69n1339_001:0197b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大音雷發。",
        "from": "X69n1339_001:0197b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所不聞。",
        "from": "X69n1339_001:0197b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其負雄經博論者徑徑勝其數。",
        "from": "X69n1339_001:0197b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆匿影吞聲于其左右。",
        "from": "X69n1339_001:0197b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡是提唱者。",
        "from": "X69n1339_001:0197b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有旨歸。",
        "from": "X69n1339_001:0197b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋以應動觀機。",
        "from": "X69n1339_001:0197b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事無虗發。",
        "from": "X69n1339_001:0197b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或滯其語句者。",
        "from": "X69n1339_001:0197b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則釋其所黏。",
        "from": "X69n1339_001:0197b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或執其意解者。",
        "from": "X69n1339_001:0197b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則除其所縛。",
        "from": "X69n1339_001:0197b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或坐其向上者。",
        "from": "X69n1339_001:0197b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則掇之於未然。",
        "from": "X69n1339_001:0197b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或止其中下者。",
        "from": "X69n1339_001:0197b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則擊之於已兆。",
        "from": "X69n1339_001:0197b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或補其所闕。",
        "from": "X69n1339_001:0197b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則正眼具全。",
        "from": "X69n1339_001:0197b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或刪其所繁。",
        "from": "X69n1339_001:0197b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則大意不紊。",
        "from": "X69n1339_001:0197b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以離情妄。",
        "from": "X69n1339_001:0197b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泯智照。",
        "from": "X69n1339_001:0197b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後真心現前。",
        "from": "X69n1339_001:0197b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古今獨耀。",
        "from": "X69n1339_001:0197b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨方施設。",
        "from": "X69n1339_001:0197b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一味齊收。",
        "from": "X69n1339_001:0197b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如曦馭當畫。",
        "from": "X69n1339_001:0197b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "影現無垠。",
        "from": "X69n1339_001:0197b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀者四來。",
        "from": "X69n1339_001:0197b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓以隨對。",
        "from": "X69n1339_001:0197b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其可得而盡之乎。",
        "from": "X69n1339_001:0197b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門人元聚。",
        "from": "X69n1339_001:0197b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久探師室。",
        "from": "X69n1339_001:0197b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親承指誨。",
        "from": "X69n1339_001:0197b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日有升舉。",
        "from": "X69n1339_001:0197b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即而記之。",
        "from": "X69n1339_001:0197b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡百餘則。",
        "from": "X69n1339_001:0197b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗣以纂之。",
        "from": "X69n1339_001:0197b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以閒干前後二錄。",
        "from": "X69n1339_001:0197b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目之為中錄。",
        "from": "X69n1339_001:0197b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是乎。",
        "from": "X69n1339_001:0197b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉前後則中攝矣。",
        "from": "X69n1339_001:0197b20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉中則前後盡矣。",
        "from": "X69n1339_001:0197b20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非離前後而趣其中。",
        "from": "X69n1339_001:0197b20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非離中而止其前後。",
        "from": "X69n1339_001:0197b21_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中則無後前。",
        "from": "X69n1339_001:0197b21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後則無中。",
        "from": "X69n1339_001:0197b21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師之大旨。",
        "from": "X69n1339_001:0197b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一以貫之。",
        "from": "X69n1339_001:0197b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其可得而思之耶。",
        "from": "X69n1339_001:0197b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設肆目于其間者。",
        "from": "X69n1339_001:0197b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若游滄海玩群龍之闕。",
        "from": "X69n1339_001:0197b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯視珍貝。",
        "from": "X69n1339_001:0197b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心目燦然。",
        "from": "X69n1339_001:0197b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不暇應接耳。",
        "from": "X69n1339_001:0197b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師之生緣受業得法。",
        "from": "X69n1339_001:0197c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具載之別錄。",
        "from": "X69n1339_001:0197c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復煩",
        "from": "X69n1339_001:0197c01_10",
        "context_with_next_sentence": false
    }
]