[
    {
        "source_sentence": "大方廣菩薩藏文殊師利根本儀",
        "from": "T20n1191_019:0900a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軌經卷第十九",
        "from": "T20n1191_019:0900a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T20n1191_019:0900a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣天息災奉　詔譯",
        "from": "T20n1191_019:0900a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來藏大法寶法界相無數功德祥瑞",
        "from": "T20n1191_019:0900a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "品第二十六",
        "from": "T20n1191_019:0900a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊釋迦牟尼佛。",
        "from": "T20n1191_019:0900a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀察淨光天眾。",
        "from": "T20n1191_019:0900a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告妙吉祥童子言。",
        "from": "T20n1191_019:0900a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子彼如來藏法界相大法寶最上祕密勅。",
        "from": "T20n1191_019:0900a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令眾生一一依行。",
        "from": "T20n1191_019:0900a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有求成智證祥瑞幖幟稱量種種之事。",
        "from": "T20n1191_019:0900a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及成就受用之物。",
        "from": "T20n1191_019:0900a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識一切部多等語。",
        "from": "T20n1191_019:0900a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非想等眾生音聲。",
        "from": "T20n1191_019:0900a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及知見在不在一切真言法則種種之事。",
        "from": "T20n1191_019:0900a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至佛一切法中用最上聲具真實義。",
        "from": "T20n1191_019:0900a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用非常聲具無常義。",
        "from": "T20n1191_019:0900a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如是義要離繁雜。",
        "from": "T20n1191_019:0900a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又諸真言所闕。",
        "from": "T20n1191_019:0900a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重輕及中三種之事。",
        "from": "T20n1191_019:0900a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若音聲殊妙乃是持明天音。",
        "from": "T20n1191_019:0900a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得文句全足。",
        "from": "T20n1191_019:0900a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於經典語及世俗語中。",
        "from": "T20n1191_019:0900a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揀別真實義具真言義。",
        "from": "T20n1191_019:0900a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及別法行離諸繁雜。",
        "from": "T20n1191_019:0900a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸世間所有真言。",
        "from": "T20n1191_019:0900a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以一字二字成於文句言音殊妙。",
        "from": "T20n1191_019:0900a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以六七八字或九字十字乃至十重字。",
        "from": "T20n1191_019:0900a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得成真言音義具足。",
        "from": "T20n1191_019:0900a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或二十字至於百字。",
        "from": "T20n1191_019:0900a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言量隨彼文字多少結真言句。",
        "from": "T20n1191_019:0900a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至了解一字之義。",
        "from": "T20n1191_019:0900a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即全一切真言之義。",
        "from": "T20n1191_019:0900a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來所說乃成上品廣大真言。",
        "from": "T20n1191_019:0900a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼佛子所說是為中品。",
        "from": "T20n1191_019:0900a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼世間一切人天所說斯為下品。",
        "from": "T20n1191_019:0900a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以佛之所說一字或二字斯有千義。",
        "from": "T20n1191_019:0900b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是佛菩薩等真言之量。",
        "from": "T20n1191_019:0900b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼真言法所用文字音聲。",
        "from": "T20n1191_019:0900b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆具真實之義。",
        "from": "T20n1191_019:0900b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善法嚴持。",
        "from": "T20n1191_019:0900b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼真言行人或求成就。",
        "from": "T20n1191_019:0900b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用音聲相作成就法。",
        "from": "T20n1191_019:0900b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依彼五音。",
        "from": "T20n1191_019:0900b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸訛略不正言音。",
        "from": "T20n1191_019:0900b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得言音具足方為圓滿。",
        "from": "T20n1191_019:0900b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃得相應成就。",
        "from": "T20n1191_019:0900b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不依法及聲義不全。",
        "from": "T20n1191_019:0900b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸真言不得成就。",
        "from": "T20n1191_019:0900b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼行人長時不間默然持誦。",
        "from": "T20n1191_019:0900b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久久之間必得不空成就。",
        "from": "T20n1191_019:0900b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於他世於法易得。",
        "from": "T20n1191_019:0900b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持誦行人於三品修行事業。",
        "from": "T20n1191_019:0900b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要當悉知。",
        "from": "T20n1191_019:0900b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至下品一切世間。",
        "from": "T20n1191_019:0900b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有人及非人一切部多等嫉妬之者。",
        "from": "T20n1191_019:0900b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說真言文字一二三數。",
        "from": "T20n1191_019:0900b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或種種邊地之語及中國語。",
        "from": "T20n1191_019:0900b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各如本行結自語聲。",
        "from": "T20n1191_019:0900b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各所說有百千種。",
        "from": "T20n1191_019:0900b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一四句偈頌文義有定體式。",
        "from": "T20n1191_019:0900b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及定伽陀句義亦然。",
        "from": "T20n1191_019:0900b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各隨本義互相依用而得為上。",
        "from": "T20n1191_019:0900b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或缺少文字是為聲義闕。",
        "from": "T20n1191_019:0900b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或訛略不正是為不分明闕。",
        "from": "T20n1191_019:0900b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或文字不全是為點畫闕。",
        "from": "T20n1191_019:0900b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸智者當須遠離。",
        "from": "T20n1191_019:0900b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸國土中隨方言音。",
        "from": "T20n1191_019:0900b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言中少有闕減。",
        "from": "T20n1191_019:0900b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切法不能成就。",
        "from": "T20n1191_019:0900b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此復說有漏無漏。",
        "from": "T20n1191_019:0900b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切真言相。",
        "from": "T20n1191_019:0900b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若真言多舍字。",
        "from": "T20n1191_019:0900b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以唵字為上義怛字為其相。",
        "from": "T20n1191_019:0900b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此決定於中品得成就。",
        "from": "T20n1191_019:0900b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若真言先用唵字後用摩字。",
        "from": "T20n1191_019:0900b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以舍字為添句。",
        "from": "T20n1191_019:0900b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此聲相具足決定於最上得成就。",
        "from": "T20n1191_019:0900b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左字具四方相。",
        "from": "T20n1191_019:0900b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別無添句字。",
        "from": "T20n1191_019:0900b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多字囉字二音具足。",
        "from": "T20n1191_019:0900b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼二乘者多以多字等真言。",
        "from": "T20n1191_019:0900b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成就法。",
        "from": "T20n1191_019:0900b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字為德生。",
        "from": "T20n1191_019:0900b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左字四方義者。",
        "from": "T20n1191_019:0900b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋有能成就真言之義。",
        "from": "T20n1191_019:0900b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若婆字囉字相合。",
        "from": "T20n1191_019:0900b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩字為後。",
        "from": "T20n1191_019:0900b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "音合於摩字。",
        "from": "T20n1191_019:0900b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或合曩字等。",
        "from": "T20n1191_019:0900b27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言者亦說為最上。",
        "from": "T20n1191_019:0900b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切真言中。",
        "from": "T20n1191_019:0900b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有多字多者。",
        "from": "T20n1191_019:0900b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言說為最善。",
        "from": "T20n1191_019:0900b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若吽字是焰魔天。",
        "from": "T20n1191_019:0900b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若多字多真言。",
        "from": "T20n1191_019:0900c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是帝釋天及風天。",
        "from": "T20n1191_019:0900c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若縛字是水天。",
        "from": "T20n1191_019:0900c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能利益世間而作增益。",
        "from": "T20n1191_019:0900c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若真言曀字多者是摩呬捺囉天。",
        "from": "T20n1191_019:0900c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若真言有先歸命三寶語。",
        "from": "T20n1191_019:0900c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是息災作諸快樂。",
        "from": "T20n1191_019:0900c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若歸命別一切天。",
        "from": "T20n1191_019:0900c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各用彼天本師真言作一切事。",
        "from": "T20n1191_019:0900c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若真言多用捺字及頗吒字吽字等者。",
        "from": "T20n1191_019:0900c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為大忿怒有大力勢當於一切極惡眾生而為使用。",
        "from": "T20n1191_019:0900c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為能作破壞及斷命故。",
        "from": "T20n1191_019:0900c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸持誦行人當一心遠離。",
        "from": "T20n1191_019:0900c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若輒有所作當感重罪。",
        "from": "T20n1191_019:0900c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作有二義。",
        "from": "T20n1191_019:0900c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為息災及增益事可剎那之中為作。",
        "from": "T20n1191_019:0900c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼持誦人於此真言。",
        "from": "T20n1191_019:0900c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須念誦有大功力。",
        "from": "T20n1191_019:0900c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為一切息災增益。",
        "from": "T20n1191_019:0900c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可於俱迦河岸。",
        "from": "T20n1191_019:0900c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏一切罪業之處作。",
        "from": "T20n1191_019:0900c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得於金剛族中作。",
        "from": "T20n1191_019:0900c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏法佛所不許。",
        "from": "T20n1191_019:0900c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夜叉王所說真言。",
        "from": "T20n1191_019:0900c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為調伏眾生。",
        "from": "T20n1191_019:0900c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能變現大力為降伏相。",
        "from": "T20n1191_019:0900c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一切法中所說有三種族。",
        "from": "T20n1191_019:0900c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有八種族。",
        "from": "T20n1191_019:0900c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯如來亦自成就三種。",
        "from": "T20n1191_019:0900c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得配上中下品三種所謂息災法增益法調伏法。",
        "from": "T20n1191_019:0900c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言儀軌所修行力唯說。",
        "from": "T20n1191_019:0900c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得為調伏用。",
        "from": "T20n1191_019:0900c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋此下品事以斷眾生命故。",
        "from": "T20n1191_019:0900c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我一切智之所不許。",
        "from": "T20n1191_019:0900c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此所說儀軌王中真言體相。",
        "from": "T20n1191_019:0900c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大力功用甚深廣大。",
        "from": "T20n1191_019:0900c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依作法無有闕事者。",
        "from": "T20n1191_019:0900c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大聖力。",
        "from": "T20n1191_019:0900c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超越世間及出世間一切真言等。",
        "from": "T20n1191_019:0900c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼恒當得無數功德真言成就。",
        "from": "T20n1191_019:0900c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥我今顯說無數之數。",
        "from": "T20n1191_019:0900c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至唯佛如來智所知量。",
        "from": "T20n1191_019:0900c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今具說。",
        "from": "T20n1191_019:0900c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數始之一自一至十。",
        "from": "T20n1191_019:0900c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至二十三十。",
        "from": "T20n1191_019:0900c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次四十五十。",
        "from": "T20n1191_019:0900c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次六十七十八十九十直至滿百。",
        "from": "T20n1191_019:0900c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥百數滿已。",
        "from": "T20n1191_019:0900c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十十說之。",
        "from": "T20n1191_019:0900c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十百為千。",
        "from": "T20n1191_019:0900c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十千為摩庾多。",
        "from": "T20n1191_019:0900c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十摩庾多為一洛叉。",
        "from": "T20n1191_019:0900c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十洛叉為大洛叉。",
        "from": "T20n1191_019:0900c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大洛叉為俱胝。",
        "from": "T20n1191_019:0900c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十俱胝為大俱胝。",
        "from": "T20n1191_019:0900c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大俱胝為阿里沒捺。",
        "from": "T20n1191_019:0901a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十阿里沒捺為大阿里沒捺。",
        "from": "T20n1191_019:0901a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大阿里沒捺為渴誐。",
        "from": "T20n1191_019:0901a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十渴誐為大渴誐。",
        "from": "T20n1191_019:0901a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大渴誐為渴里嚩。",
        "from": "T20n1191_019:0901a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十渴里嚩為大渴里嚩。",
        "from": "T20n1191_019:0901a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大渴里嚩為鉢納摩。",
        "from": "T20n1191_019:0901a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十鉢納摩為大鉢納摩。",
        "from": "T20n1191_019:0901a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大鉢納摩為尾嚩賀。",
        "from": "T20n1191_019:0901a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十尾嚩賀為大尾嚩賀。",
        "from": "T20n1191_019:0901a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大尾嚩賀為摩野。",
        "from": "T20n1191_019:0901a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十摩野為大摩野。",
        "from": "T20n1191_019:0901a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大摩野為三母捺囉。",
        "from": "T20n1191_019:0901a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上為智。",
        "from": "T20n1191_019:0901a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "算數十三母捺羅為大三母捺囉。",
        "from": "T20n1191_019:0901a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大三母捺囉為娑誐囉。",
        "from": "T20n1191_019:0901a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十娑誐囉為大娑誐囉。",
        "from": "T20n1191_019:0901a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大娑誐囉為鉢囉伽囉。",
        "from": "T20n1191_019:0901a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十鉢囉伽囉為大鉢囉伽囉。",
        "from": "T20n1191_019:0901a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大鉢囉伽囉為阿世沙。",
        "from": "T20n1191_019:0901a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十阿世沙為大阿世沙。",
        "from": "T20n1191_019:0901a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大阿世沙為僧[企*也](切身)如上是量。",
        "from": "T20n1191_019:0901a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "算數十僧[企*也](同上)為大僧[企*也]。",
        "from": "T20n1191_019:0901a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大僧[企*也]為阿弭旦。",
        "from": "T20n1191_019:0901a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十阿弭旦為大阿弭旦。",
        "from": "T20n1191_019:0901a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及千阿弭旦為路迦。",
        "from": "T20n1191_019:0901a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十路迦為大路迦。",
        "from": "T20n1191_019:0901a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大路迦為娑摩娑。",
        "from": "T20n1191_019:0901a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十娑摩娑為大娑摩娑。",
        "from": "T20n1191_019:0901a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大娑摩娑為祖底。",
        "from": "T20n1191_019:0901a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十祖底為大祖底。",
        "from": "T20n1191_019:0901a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大祖底為摩賀囉世。",
        "from": "T20n1191_019:0901a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十摩賀囉世為深。",
        "from": "T20n1191_019:0901a18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十深為體囉。",
        "from": "T20n1191_019:0901a18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十體囉為大體囉。",
        "from": "T20n1191_019:0901a19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十大體囉為嚩護摩怛。",
        "from": "T20n1191_019:0901a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十嚩護摩怛為他曩。",
        "from": "T20n1191_019:0901a20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十他曩為大他曩。",
        "from": "T20n1191_019:0901a20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上為勇猛智。",
        "from": "T20n1191_019:0901a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "算數十大他曩為阿弭多。",
        "from": "T20n1191_019:0901a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至弭多為摩賀囉貪。",
        "from": "T20n1191_019:0901a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩賀囉貪為酥酥嚕多。",
        "from": "T20n1191_019:0901a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酥酥嚕多為摩賀囉拏嚩。",
        "from": "T20n1191_019:0901a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩賀囉拏嚩為鉢囉他摩。",
        "from": "T20n1191_019:0901a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉢囉他摩為摩賀鉢囉他摩。",
        "from": "T20n1191_019:0901a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩賀鉢囉他摩為悉里瑟姹。",
        "from": "T20n1191_019:0901a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉里瑟姹為濟瑟姹。",
        "from": "T20n1191_019:0901a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濟瑟姹為曼儞囉娑。",
        "from": "T20n1191_019:0901a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼儞囉娑為阿進[怚*也](切身)阿進[怚*也](切身)為大阿進[怚*也](同上)大阿進[怚*也](同上)為具囉。",
        "from": "T20n1191_019:0901a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具囉為捺囉[惹*也](切身)捺囉[惹*也]為儞[達*也](切身)鉢多。",
        "from": "T20n1191_019:0901a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儞[達*也]鉢多為輸婆。",
        "from": "T20n1191_019:0901a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輸婆為大地多。",
        "from": "T20n1191_019:0901b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地多為弭多。",
        "from": "T20n1191_019:0901b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弭多為唧多。",
        "from": "T20n1191_019:0901b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唧多為尾剎波。",
        "from": "T20n1191_019:0901b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾剎波為阿鼻路[波*也](切身)阿鼻路[波*也]為曩鼻囉[波*也]。",
        "from": "T20n1191_019:0901b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩鼻囉[波*也]為[尾*孕](切身)摩。",
        "from": "T20n1191_019:0901b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[尾*孕]摩為大[尾*孕]摩。",
        "from": "T20n1191_019:0901b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大[尾*孕]摩為闇嚩囉。",
        "from": "T20n1191_019:0901b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闇嚩囉為大闇嚩囉。",
        "from": "T20n1191_019:0901b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大闇嚩囉為佉里嚩。",
        "from": "T20n1191_019:0901b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佉里嚩為大佉里嚩。",
        "from": "T20n1191_019:0901b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上是息災增益之處功德算數。",
        "from": "T20n1191_019:0901b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後大智者於沒里瑟吒及烏捺迦。",
        "from": "T20n1191_019:0901b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生迷處。",
        "from": "T20n1191_019:0901b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最上極最上乃至佛剎最上。",
        "from": "T20n1191_019:0901b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是算數非世間人所能知故。",
        "from": "T20n1191_019:0901b09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛如來算知其數。",
        "from": "T20n1191_019:0901b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以佛剎最上者。",
        "from": "T20n1191_019:0901b10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以恒河沙等佛剎微塵之數。",
        "from": "T20n1191_019:0901b10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為譬喻法而為算數。",
        "from": "T20n1191_019:0901b11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此算數量是一切智智無礙之所知量。",
        "from": "T20n1191_019:0901b11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥我於如是數量。",
        "from": "T20n1191_019:0901b12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸正覺所已曾供養。",
        "from": "T20n1191_019:0901b13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於不思議劫而為菩薩。",
        "from": "T20n1191_019:0901b13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生今得成佛。",
        "from": "T20n1191_019:0901b14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今所說真言最上第一儀軌較量功德。",
        "from": "T20n1191_019:0901b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至過去未來現在一切正覺亦同此說。",
        "from": "T20n1191_019:0901b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子我於末法之時。",
        "from": "T20n1191_019:0901b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於世間說此真言廣大儀軌王。",
        "from": "T20n1191_019:0901b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能依此修行。",
        "from": "T20n1191_019:0901b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切天人阿修羅。",
        "from": "T20n1191_019:0901b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至大力那羅延天。",
        "from": "T20n1191_019:0901b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及世間出世間一切大力賢聖。",
        "from": "T20n1191_019:0901b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與此相應者。",
        "from": "T20n1191_019:0901b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得成就。",
        "from": "T20n1191_019:0901b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥所有世間及出世間。",
        "from": "T20n1191_019:0901b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切工巧技能。",
        "from": "T20n1191_019:0901b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空界相種種算數。",
        "from": "T20n1191_019:0901b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內明法儀軌等。",
        "from": "T20n1191_019:0901b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰陽法吉凶祥瑞。",
        "from": "T20n1191_019:0901b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切部多言語善惡心行幖幟界處。",
        "from": "T20n1191_019:0901b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切眾生因果。",
        "from": "T20n1191_019:0901b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及圍陀典籍歌戲等事。",
        "from": "T20n1191_019:0901b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香藥方術種種之事。",
        "from": "T20n1191_019:0901b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於過去為菩薩時。",
        "from": "T20n1191_019:0901b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益一切眾生。",
        "from": "T20n1191_019:0901b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常說如是之事而為教導。",
        "from": "T20n1191_019:0901b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又為一切眾生處於輪迴。",
        "from": "T20n1191_019:0901b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及在饑饉久久住者。",
        "from": "T20n1191_019:0901b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨彼眾生之所好樂。",
        "from": "T20n1191_019:0901b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆為作使得如心。",
        "from": "T20n1191_019:0901b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥如我為善住作利益法。",
        "from": "T20n1191_019:0901b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼善住種種業成就。",
        "from": "T20n1191_019:0901b29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受種種眾生身。",
        "from": "T20n1191_019:0901b29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為彼說相應義法。",
        "from": "T20n1191_019:0901c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得破壞種種眾生身業。",
        "from": "T20n1191_019:0901c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼如法作獲。",
        "from": "T20n1191_019:0901c02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得色相具足富貴壽命。",
        "from": "T20n1191_019:0901c02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥我所利益皆悉如是。",
        "from": "T20n1191_019:0901c03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復我於過去之時。",
        "from": "T20n1191_019:0901c03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用大悲心大慈心大願心。",
        "from": "T20n1191_019:0901c04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍諸眾生持誦種種法。",
        "from": "T20n1191_019:0901c04_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以利益心轉諸色相。",
        "from": "T20n1191_019:0901c05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作梵王相或作帝釋相。",
        "from": "T20n1191_019:0901c05_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作大自在天或若那羅延天。",
        "from": "T20n1191_019:0901c06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼財主乃里多天。",
        "from": "T20n1191_019:0901c07_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作星宿種種形相。",
        "from": "T20n1191_019:0901c07_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知眾生心隨所好樂。",
        "from": "T20n1191_019:0901c08_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一次第令得安居。",
        "from": "T20n1191_019:0901c08_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜快樂。",
        "from": "T20n1191_019:0901c09_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於長時輪轉遊行。",
        "from": "T20n1191_019:0901c09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察世間一切眾生。",
        "from": "T20n1191_019:0901c09_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為宣說了義祕密真言之相。",
        "from": "T20n1191_019:0901c10_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復依儀軌次第修行觀智。",
        "from": "T20n1191_019:0901c10_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於久遠時轉生佛族。",
        "from": "T20n1191_019:0901c11_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又住無我決定之行。",
        "from": "T20n1191_019:0901c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是依行成佛菩提。",
        "from": "T20n1191_019:0901c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得最上安樂。",
        "from": "T20n1191_019:0901c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸病惱無事無憂。",
        "from": "T20n1191_019:0901c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜涅盤一切解脫。",
        "from": "T20n1191_019:0901c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為諸眾生。",
        "from": "T20n1191_019:0901c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現生此界轉於法輪。",
        "from": "T20n1191_019:0901c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸行人演說如是真言之法廣大儀軌。",
        "from": "T20n1191_019:0901c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼誦者於此廣大儀軌。",
        "from": "T20n1191_019:0901c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得虛妄傳授。",
        "from": "T20n1191_019:0901c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至世間真言儀軌。",
        "from": "T20n1191_019:0901c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆須信重供養。",
        "from": "T20n1191_019:0901c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切輕慢毀謗。",
        "from": "T20n1191_019:0901c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又諸行人於此廣大儀軌。",
        "from": "T20n1191_019:0901c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰陽祥瑞吉祥法義。",
        "from": "T20n1191_019:0901c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得妄說當住正心。",
        "from": "T20n1191_019:0901c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如諸藥物等。",
        "from": "T20n1191_019:0901c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其成就是得果報。",
        "from": "T20n1191_019:0901c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故於佛最上伽陀。",
        "from": "T20n1191_019:0901c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說吉祥義微細了解。",
        "from": "T20n1191_019:0901c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白月吉日合白。",
        "from": "T20n1191_019:0901c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "星宿起首持誦求真言成就眾善法則。",
        "from": "T20n1191_019:0901c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須遠離諸不善事。",
        "from": "T20n1191_019:0901c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我於過去。",
        "from": "T20n1191_019:0901c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為持誦者。",
        "from": "T20n1191_019:0901c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至所有了解世間陰陽術法。",
        "from": "T20n1191_019:0901c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及解諸儀法因果正論調伏法等。",
        "from": "T20n1191_019:0901c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說如是種種諸法。",
        "from": "T20n1191_019:0901c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為利益一切眾生。",
        "from": "T20n1191_019:0901c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼一切受持真言行人。",
        "from": "T20n1191_019:0901c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因此成就之法。",
        "from": "T20n1191_019:0901c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得趣佛道。",
        "from": "T20n1191_019:0901c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸法中皆得解脫。",
        "from": "T20n1191_019:0901c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是受持真言行人。",
        "from": "T20n1191_019:0901c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有成就之法不得妄作。",
        "from": "T20n1191_019:0901c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至所有世間及出世間。",
        "from": "T20n1191_019:0901c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切最上真言明。",
        "from": "T20n1191_019:0901c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得以不正心而加毀謗。",
        "from": "T20n1191_019:0901c29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以誠諦心恭信供養。",
        "from": "T20n1191_019:0902a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此真言三昧諸有教師。",
        "from": "T20n1191_019:0902a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行佛等引調諸佛子。",
        "from": "T20n1191_019:0902a02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入佛曼拏羅及與三昧。",
        "from": "T20n1191_019:0902a03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當使決定滅除過去見在未來三世諸不善業。",
        "from": "T20n1191_019:0902a03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於他所得非聖真言。",
        "from": "T20n1191_019:0902a04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不得輕慢。",
        "from": "T20n1191_019:0902a05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於不空成就之者。",
        "from": "T20n1191_019:0902a05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至世間大力真言。",
        "from": "T20n1191_019:0902a05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有煩惱所生邪道色相。",
        "from": "T20n1191_019:0902a06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼不空成就者。",
        "from": "T20n1191_019:0902a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得妄與傳授。",
        "from": "T20n1191_019:0902a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於心常瞋怒多於言語。",
        "from": "T20n1191_019:0902a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不得傳於此法。",
        "from": "T20n1191_019:0902a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或傳授及與為作。",
        "from": "T20n1191_019:0902a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定不得所求果報。",
        "from": "T20n1191_019:0902a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或心住寂靜恒修等引。",
        "from": "T20n1191_019:0902a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法念誦一真言者。",
        "from": "T20n1191_019:0902a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定獲果報。",
        "from": "T20n1191_019:0902a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復一一如所儀則。",
        "from": "T20n1191_019:0902a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起決定最上殊勝之心。",
        "from": "T20n1191_019:0902a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦為作之者。",
        "from": "T20n1191_019:0902a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切法無不成就。",
        "from": "T20n1191_019:0902a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復有人久修善業心恒清淨。",
        "from": "T20n1191_019:0902a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法中發殊勝心信重三寶者。",
        "from": "T20n1191_019:0902a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求成就。",
        "from": "T20n1191_019:0902a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定獲得最上成就功德。",
        "from": "T20n1191_019:0902a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣菩薩藏文殊師利根本儀軌經卷第十九",
        "from": "T20n1191_019:0902a16_0",
        "context_with_next_sentence": false
    }
]