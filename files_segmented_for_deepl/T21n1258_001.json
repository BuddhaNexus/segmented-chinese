[
    {
        "source_sentence": "摩利支菩薩略念誦法",
        "from": "T21n1258_001:0285a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺三藏沙門大廣智",
        "from": "T21n1258_001:0285a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空奉　詔譯",
        "from": "T21n1258_001:0285a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應結毘盧遮那佛印。",
        "from": "T21n1258_001:0285a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次印相者。",
        "from": "T21n1258_001:0285a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內相叉。",
        "from": "T21n1258_001:0285a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並竪二大指即成。",
        "from": "T21n1258_001:0285a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言七遍頂上散。",
        "from": "T21n1258_001:0285a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1258_001:0285a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱南阿尾羅吽欠",
        "from": "T21n1258_001:0285a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結摩利支菩薩根本真言印。",
        "from": "T21n1258_001:0285a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次印相者。",
        "from": "T21n1258_001:0285a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手內相叉。",
        "from": "T21n1258_001:0285a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪合二頭指。",
        "from": "T21n1258_001:0285a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指各糺持二頭指令相捻。",
        "from": "T21n1258_001:0285a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指並竪合即成。",
        "from": "T21n1258_001:0285a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言加持身五處。",
        "from": "T21n1258_001:0285a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印額次右肩次左肩。",
        "from": "T21n1258_001:0285a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次心次喉上。",
        "from": "T21n1258_001:0285b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以各誦一遍。",
        "from": "T21n1258_001:0285b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1258_001:0285b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨(引)囉怛曩(二合)怛囉(二合)夜耶(一)怛儞也(二合)他(引二)遏迦沫思(三)沫迦沫思遏度(引)沫思(四)旨跛囉沫思(五)摩賀(引)旨跛囉沫思(六)按怛馱娜沫思(七)摩哩制野沫思(八)曩謨薩都(二合)帝(九)[口*落]乞叉(二合)[口*落]乞叉(二合)[牟*含](引十)薩嚩薩怛嚩(二合)難(引)者(十一)薩嚩怛囉(二合)薩嚩波庾(引十二)跛捺囉(二合)吠毘藥(二合)娑嚩(二合)訶(引十三)次結摩利支菩薩心印。",
        "from": "T21n1258_001:0285b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1258_001:0285b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱(引)南(引)唵摩(引)利哩制曳沙嚩(二合)訶次結心真言印相者。",
        "from": "T21n1258_001:0285b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左手虛作拳。",
        "from": "T21n1258_001:0285b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指大母指相捻如環。",
        "from": "T21n1258_001:0285b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自身入左手拳中。",
        "from": "T21n1258_001:0285b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手覆左拳上。",
        "from": "T21n1258_001:0285b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想此印為摩利支菩薩形。",
        "from": "T21n1258_001:0285b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自身在摩利支菩薩心中不斷絕。",
        "from": "T21n1258_001:0285b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身真言應時獲得殊勝加持。",
        "from": "T21n1258_001:0285b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被一切惡人為障礙者所見。",
        "from": "T21n1258_001:0285b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災禍皆不著身。",
        "from": "T21n1258_001:0285b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切口舌皆得除滅。",
        "from": "T21n1258_001:0285b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蟲狼虎豹水火盜則賊皆不能侵害。",
        "from": "T21n1258_001:0285b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求世間果報皆得諧偶。",
        "from": "T21n1258_001:0285b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修出世間法。",
        "from": "T21n1258_001:0285b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得禪定現前。",
        "from": "T21n1258_001:0285b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧增盛獲得聞持。",
        "from": "T21n1258_001:0285b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不忘失菩提心法。",
        "from": "T21n1258_001:0285b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言時深起悲愍。",
        "from": "T21n1258_001:0285b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切有情拔除苦惱。",
        "from": "T21n1258_001:0285b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆獲無障解脫速證無上菩提道。",
        "from": "T21n1258_001:0285b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須祕密勿妄傳授。",
        "from": "T21n1258_001:0285b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩利支菩薩略念誦法",
        "from": "T21n1258_001:0285b24_0",
        "context_with_next_sentence": false
    }
]