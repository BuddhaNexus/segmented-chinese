[
    {
        "source_sentence": "持齋念佛懺悔禮文",
        "from": "T85n2829_001:1266b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛名恐畏□□□□□□□□□□□□□□□□□□□□逼迫無有閑闕□罪極□□□□□□□□□□□□□百劫千劫無解脫時亦無閑□□□□□□□□□□□□亦無閑時禮拜供養諸佛慳惜□□□□□□□□□□□□之福遂略出。",
        "from": "T85n2829_001:1266b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二月禮多記□□□□□□□□□□□□正月一日平旦時向南方禮四拜除罪一伯劫。",
        "from": "T85n2829_001:1266b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二月九日鷄鳴時向北方禮四拜除罪一伯劫。",
        "from": "T85n2829_001:1266b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三月七日人定時向西方禮四拜除罪三伯劫。",
        "from": "T85n2829_001:1266b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四月八日夜半時向北方禮四拜除罪一伯三十劫。",
        "from": "T85n2829_001:1266b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五月六日黃昏時向南方禮四拜除罪四百劫。",
        "from": "T85n2829_001:1266b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六月三日黃昏時向東方禮六拜除罪五百劫。",
        "from": "T85n2829_001:1266b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七月六日午時向東方禮九拜除罪六百二千劫。",
        "from": "T85n2829_001:1266c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八月八日午時向南方禮九拜除罪三百二千劫。",
        "from": "T85n2829_001:1266c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九月九日午時向東方禮九拜除罪三百三千劫。",
        "from": "T85n2829_001:1266c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十月七日黃昏時向南方禮拜除罪四千劫。",
        "from": "T85n2829_001:1266c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一月十三日黃昏時向南方禮四拜除罪四千劫。",
        "from": "T85n2829_001:1266c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二月十三日黃昏時向南方禮三十拜除罪四□劫。",
        "from": "T85n2829_001:1266c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時玄藏法",
        "from": "T85n2829_001:1266c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅抄此佛名頒下諸州五濁惡世。",
        "from": "T85n2829_001:1266c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善女人能至心受持此禮。",
        "from": "T85n2829_001:1266c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依持劫禮者。",
        "from": "T85n2829_001:1266c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除罪無數恒河沙劫。",
        "from": "T85n2829_001:1266c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後託生□□□□□坐寶蓮花受諸快樂。",
        "from": "T85n2829_001:1266c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思衣羅錦千重。",
        "from": "T85n2829_001:1266c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念食百味俱至。",
        "from": "T85n2829_001:1266c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又能教人受持此禮者。",
        "from": "T85n2829_001:1266c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲定除罪八萬二千五百□□□□不虛。",
        "from": "T85n2829_001:1266c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又略每月惡日並是十齋日。",
        "from": "T85n2829_001:1266c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□□□□□□□與若此日持齋念佛不隨劍樹地獄　八日太□□齋念佛不隨鐵犁地獄　十四詞命下。",
        "from": "T85n2829_001:1266c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮鑊湯地獄　十五日五道大神下。",
        "from": "T85n2829_001:1266c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮□屎地獄　十八日閻羅王下。",
        "from": "T85n2829_001:1266c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮鋸解地獄　二十三日天大將軍下。",
        "from": "T85n2829_001:1266c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮銅柱地獄　二十四日察命下。",
        "from": "T85n2829_001:1266c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮鐵床地獄　二十八日太山府君下。",
        "from": "T85n2829_001:1266c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮鐵叉地獄　二十九日四天王下。",
        "from": "T85n2829_001:1266c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮刀山地獄　三十日釋梵天王下。",
        "from": "T85n2829_001:1266c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此日持齋念佛不墮鐵倫地獄　右以上十齋日並是諸大神子童子及察命下。",
        "from": "T85n2829_001:1266c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時節注云。",
        "from": "T85n2829_001:1266c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋後午前即下。",
        "from": "T85n2829_001:1266c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹請眾等至時千萬努力。",
        "from": "T85n2829_001:1266c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛修善慎之勿使察錄故負罪愆。",
        "from": "T85n2829_001:1266c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰能相救。",
        "from": "T85n2829_001:1267a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶以真宗闊遠。",
        "from": "T85n2829_001:1267a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非積善而不臻。",
        "from": "T85n2829_001:1267a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦海難登。",
        "from": "T85n2829_001:1267a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非舟船而不渡。",
        "from": "T85n2829_001:1267a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口如賢劫千佛。",
        "from": "T85n2829_001:1267a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茲聖化以成形三十三天表輪王於福業。",
        "from": "T85n2829_001:1267a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以釋迦修道藉六載之艱辛。",
        "from": "T85n2829_001:1267a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子捨身為求四句之八字。",
        "from": "T85n2829_001:1267a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛功德海歎莫能盡。",
        "from": "T85n2829_001:1267a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然今座前齋主啟首和南十方諸佛尊法般若羅漢聖僧。",
        "from": "T85n2829_001:1267a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即[病-丙+帶]福臨見前請眾年常起願。",
        "from": "T85n2829_001:1267a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家口平安敬設齋檀一中供養。",
        "from": "T85n2829_001:1267a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願使從今以去香山香水灌蕩身心。",
        "from": "T85n2829_001:1267a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上醍醐流於體內。",
        "from": "T85n2829_001:1267a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形同寶岳不動不傾命等。",
        "from": "T85n2829_001:1267a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今山遷靈常住界。",
        "from": "T85n2829_001:1267a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即菩提日進惠業高明福與善誓同年命等金剛等故。",
        "from": "T85n2829_001:1267a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女乃任任美德似碧樹之開研。",
        "from": "T85n2829_001:1267a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琬琬風宜類叢花而耀採。",
        "from": "T85n2829_001:1267a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又願以次功德。",
        "from": "T85n2829_001:1267a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願皇帝皇后聖化無窮。",
        "from": "T85n2829_001:1267a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐一帝之臺不著千王之化連成將暮即聖以來期異國土人握神圖而競至耕賓讓壟路容分途聖祚永隆段延萬代。",
        "from": "T85n2829_001:1267a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界飜為淨土。",
        "from": "T85n2829_001:1267a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄變作香城。",
        "from": "T85n2829_001:1267a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱出苦門咸登覺道　梵音　云何得長壽　金剛不壞身佛以何因緣　得大堅固力　云何於此經　究竟到彼岸　願佛開微密廣為眾生說。",
        "from": "T85n2829_001:1267a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為二十八天釋梵王等敬禮常住三寶　為施主福慧莊嚴敬禮常住三寶　為六道眾生離障下脫和南一切賢聖　施食呪願。",
        "from": "T85n2829_001:1267a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今所施食上獻諸佛。",
        "from": "T85n2829_001:1267a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中奉賢聖。",
        "from": "T85n2829_001:1267a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下及法界眾生普同飽滿等供此食。",
        "from": "T85n2829_001:1267a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食香未觸。",
        "from": "T85n2829_001:1267a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上獻諸佛。",
        "from": "T85n2829_001:1267a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中奉賢聖。",
        "from": "T85n2829_001:1267a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下及法界眾生普同飽滿　讖食呪願　敬白大眾。",
        "from": "T85n2829_001:1267a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子所造齋食眾。",
        "from": "T85n2829_001:1267a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手共成多不如法願眾。",
        "from": "T85n2829_001:1267a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘慈布施歡喜。",
        "from": "T85n2829_001:1267a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重白大眾。",
        "from": "T85n2829_001:1267a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子所造齋食眾。",
        "from": "T85n2829_001:1267a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽手共成多不如法一擬恭齋中時以過殘有餘食。",
        "from": "T85n2829_001:1267a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽眾處分餘食施普誦處。",
        "from": "T85n2829_001:1267b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界如虛空。",
        "from": "T85n2829_001:1267b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮花不著水。",
        "from": "T85n2829_001:1267b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心清淨超於彼稽首禮無上尊布施呪願。",
        "from": "T85n2829_001:1267b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱為萬行首捨著離慳貪。",
        "from": "T85n2829_001:1267b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故今施主設齋以訖恐果不圓。",
        "from": "T85n2829_001:1267b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復持淨財以為布施。",
        "from": "T85n2829_001:1267b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先亡者往生西方。",
        "from": "T85n2829_001:1267b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在者見性成佛道　一切恭敬　自歸依佛。",
        "from": "T85n2829_001:1267b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當願眾生體解正覺發菩提意　自歸依法。",
        "from": "T85n2829_001:1267b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當願眾生深入經藏智慧如海　自歸依僧。",
        "from": "T85n2829_001:1267b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當願眾生統理大眾一切無礙和男聽眾。",
        "from": "T85n2829_001:1267b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切普誦　如來妙色身　世間無與等　無比不思議　是故今敬禮　如來色無盡　智慧亦復然　一切法常住　是故歸依敬禮常住三寶日光菩薩　說多囉尼神呪。",
        "from": "T85n2829_001:1267b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "條低帝徒蘇咜阿若蜜帝鳴都咜條岐咜波賴帝咜耶彌若咜鳴都咜俱羅帝咜岐摩咜沙婆呵亡女揭。",
        "from": "T85n2829_001:1267b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利佛國難達　吾本出家誰知　捨劫親翁母　唯有和尚闍梨舍利佛國難為　吾本出家誰知　捨却親姉親妹　唯有同學相隨　舍利弗國難為　吾本出家誰知　捨却烟芝胡粉　唯有澡豈楊枝　舍利佛國為　吾本出家誰知　捨却大氈大被　唯有坐具三衣　舍利佛目難為　吾本出家誰知　捨却染槃染椀　唯有蘊鉢同起　心中坐道場　　坐臥涅槃堂　　身是彌陀佛　何處覓西方十一面觀世音呪曰。",
        "from": "T85n2829_001:1267b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名大心呪。",
        "from": "T85n2829_001:1267b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿梨耶　婆路枳帝攝　跋囉耶　菩提薩埵耶　摩呵薩埵耶　摩呵迦路足迦耶　哆姪他唵　阿嚕力娑呵此呪能持一切鬼病大驗。",
        "from": "T85n2829_001:1267c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及持有鬼神變身。",
        "from": "T85n2829_001:1267c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作野胡及種種諸身入人身中。",
        "from": "T85n2829_001:1267c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持之並□唯須護淨。",
        "from": "T85n2829_001:1267c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令一切官人歡喜誦呪曰。",
        "from": "T85n2829_001:1267c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無多羅神護多神能令君臣喜不嗔　沙婆呵南無和修吉陀羅　南無摩醯首楞陀呵　南無踴躍大神彌憂陀　南無佉提阿蘆多　休留休留沙婆呵進果獲證修業呪曰。",
        "from": "T85n2829_001:1267c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多擲哆牟留羅牟留羅阿嘙[口*破]　牟留羅毘祇叉夜沙呵　若人受持讀誦兼修福業者。",
        "from": "T85n2829_001:1267c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人是初地菩薩南無西方阿彌陀佛。",
        "from": "T85n2829_001:1267c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛在西方極樂國。",
        "from": "T85n2829_001:1267c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普勸同心一處生。",
        "from": "T85n2829_001:1267c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無問貴賤皆昭引。",
        "from": "T85n2829_001:1267c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只是凡夫業不成。",
        "from": "T85n2829_001:1267c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一念佛常不忘。",
        "from": "T85n2829_001:1267c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二心口會須平。",
        "from": "T85n2829_001:1267c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者懃修六度行。",
        "from": "T85n2829_001:1267c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者果外覓聲名。",
        "from": "T85n2829_001:1267c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如此合佛意。",
        "from": "T85n2829_001:1267c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼國蓮華東向須臨命終時直往。",
        "from": "T85n2829_001:1267c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼隨佛六道救眾生往生安樂國。",
        "from": "T85n2829_001:1267c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1267c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道眾生不可救。",
        "from": "T85n2829_001:1267c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見佛光明不發心彌陀親喚不肯去。",
        "from": "T85n2829_001:1267c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛頭獄卒競來迎業。",
        "from": "T85n2829_001:1267c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正佛救亦不勉鑊湯爐炭轉加深佛聞。",
        "from": "T85n2829_001:1267c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人造何罪。",
        "from": "T85n2829_001:1267c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲酒食肉及邪婬。",
        "from": "T85n2829_001:1267c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普勸道場諸眾等。",
        "from": "T85n2829_001:1267c23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願捨閻浮膿血身。",
        "from": "T85n2829_001:1267c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1267c24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1267c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真門一入永不迴合掌。",
        "from": "T85n2829_001:1267c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫心坐寶臺。",
        "from": "T85n2829_001:1267c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八功德水常圓滿。",
        "from": "T85n2829_001:1267c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面蓮華遶佛來。",
        "from": "T85n2829_001:1267c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛放眉間相光照下品眾生。",
        "from": "T85n2829_001:1267c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花自開意欲他方救。",
        "from": "T85n2829_001:1267c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苦身上敢得二珠衣。",
        "from": "T85n2829_001:1267c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普勸道場諸眾等。",
        "from": "T85n2829_001:1267c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心念佛入真門。",
        "from": "T85n2829_001:1267c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1267c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金蓮獨坐顯光明絕攝大道。",
        "from": "T85n2829_001:1268a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦眾生欲得同歸於一處。",
        "from": "T85n2829_001:1268a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懃修練行會須精。",
        "from": "T85n2829_001:1268a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩內藏修十善。",
        "from": "T85n2829_001:1268a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫外行覓聲名。",
        "from": "T85n2829_001:1268a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法寬洪無有二。",
        "from": "T85n2829_001:1268a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人分別數門行。",
        "from": "T85n2829_001:1268a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說此身同性。",
        "from": "T85n2829_001:1268a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說佛性別求名。",
        "from": "T85n2829_001:1268a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此之人非是一。",
        "from": "T85n2829_001:1268a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定三塗六趣坑。",
        "from": "T85n2829_001:1268a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願絕二見修平等。",
        "from": "T85n2829_001:1268a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方淨土自然生。",
        "from": "T85n2829_001:1268a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1268a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾等專修淨土業。",
        "from": "T85n2829_001:1268a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須獨坐淨思量。",
        "from": "T85n2829_001:1268a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫言分往閻浮地。",
        "from": "T85n2829_001:1268a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾不息即無常。",
        "from": "T85n2829_001:1268a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命如風中燈燭焰。",
        "from": "T85n2829_001:1268a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦似雲中一電光。",
        "from": "T85n2829_001:1268a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不具三塗十八苦。",
        "from": "T85n2829_001:1268a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一旦無常何處藏。",
        "from": "T85n2829_001:1268a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽爾尋思深可歎。",
        "from": "T85n2829_001:1268a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何晝夜不驚忙。",
        "from": "T85n2829_001:1268a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自古聖賢不勉死。",
        "from": "T85n2829_001:1268a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況凡夫得分長。",
        "from": "T85n2829_001:1268a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者怒力修十善。",
        "from": "T85n2829_001:1268a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知身不分即無常。",
        "from": "T85n2829_001:1268a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1268a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子自性居三界。",
        "from": "T85n2829_001:1268a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長明黑闇處昏昏。",
        "from": "T85n2829_001:1268a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪迴六道無休息。",
        "from": "T85n2829_001:1268a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾得聞淨土聲。",
        "from": "T85n2829_001:1268a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日遇逢善知識。",
        "from": "T85n2829_001:1268a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願捨凡夫臭穢身。",
        "from": "T85n2829_001:1268a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卑得託生極樂國。",
        "from": "T85n2829_001:1268a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華臺上自然生。",
        "from": "T85n2829_001:1268a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1268a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無阿彌陀佛。",
        "from": "T85n2829_001:1268a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今觀此身。",
        "from": "T85n2829_001:1268a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實可厭。",
        "from": "T85n2829_001:1268a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種不淨假名身。",
        "from": "T85n2829_001:1268a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三百碎骨相支駐。",
        "from": "T85n2829_001:1268a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漏體何曾有片真。",
        "from": "T85n2829_001:1268a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脂粉朱唇徒莊識。",
        "from": "T85n2829_001:1268a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終歸地下作灰塵。",
        "from": "T85n2829_001:1268a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱熾盛無休息。",
        "from": "T85n2829_001:1268a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並是流浪三塗因。",
        "from": "T85n2829_001:1268a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普勸道場諸眾等。",
        "from": "T85n2829_001:1268a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怒力懃修淨土因。",
        "from": "T85n2829_001:1268a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1268a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三塗入難得出。",
        "from": "T85n2829_001:1268a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫受苦身。",
        "from": "T85n2829_001:1268a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自當臨命終時無善□。",
        "from": "T85n2829_001:1268a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心中忙怕自迴惶。",
        "from": "T85n2829_001:1268a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪業業皆見。",
        "from": "T85n2829_001:1268a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑊湯爐□眼前行。",
        "from": "T85n2829_001:1268a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿黎耶識受諸苦。",
        "from": "T85n2829_001:1268a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大深埋土□藏。",
        "from": "T85n2829_001:1268b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今得人身不念佛。",
        "from": "T85n2829_001:1268b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來生邊界作毛囊。",
        "from": "T85n2829_001:1268b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願□□眾生往生安樂國。",
        "from": "T85n2829_001:1268b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被毛帶角畜生身。",
        "from": "T85n2829_001:1268b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我前身厄苦因。",
        "from": "T85n2829_001:1268b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造罪殺生無休息。",
        "from": "T85n2829_001:1268b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕慢師僧狂二親。",
        "from": "T85n2829_001:1268b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲酒食肉無慚愧。",
        "from": "T85n2829_001:1268b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日受苦向誰陳。",
        "from": "T85n2829_001:1268b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口中橫礙不得語。",
        "from": "T85n2829_001:1268b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種從他鞭打身。",
        "from": "T85n2829_001:1268b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楚痛眼中雙淚下。",
        "from": "T85n2829_001:1268b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普勸來生發善心。",
        "from": "T85n2829_001:1268b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1268b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫已來懷疾慢。",
        "from": "T85n2829_001:1268b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□□癡生三毒□。",
        "from": "T85n2829_001:1268b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□□得出每被六賊。",
        "from": "T85n2829_001:1268b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共相親□□時。",
        "from": "T85n2829_001:1268b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年歸見時年歸大地。",
        "from": "T85n2829_001:1268b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺自然心即驚。",
        "from": "T85n2829_001:1268b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各懃心修善業。",
        "from": "T85n2829_001:1268b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "努力前頭避火坑。",
        "from": "T85n2829_001:1268b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共往生安樂國。",
        "from": "T85n2829_001:1268b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀西方有一國。",
        "from": "T85n2829_001:1268b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國有佛號彌陀。",
        "from": "T85n2829_001:1268b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一住說法恒沙劫。",
        "from": "T85n2829_001:1268b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為世界斷眾魔。",
        "from": "T85n2829_001:1268b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂城中登聖坐。",
        "from": "T85n2829_001:1268b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天圍遶悉來過。",
        "from": "T85n2829_001:1268b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬四千菩薩眾。",
        "from": "T85n2829_001:1268b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉花果淨娑婆。",
        "from": "T85n2829_001:1268b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共諸眾生往生安樂國。",
        "from": "T85n2829_001:1268b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無西方阿彌陀佛。",
        "from": "T85n2829_001:1268b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天宮悉出空中。",
        "from": "T85n2829_001:1268b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現七寶臺殿□恒□幢蓋幡花遍□□金枝玉樹自然□。",
        "from": "T85n2829_001:1268b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬瑙玻[王*梨]為大地。",
        "from": "T85n2829_001:1268b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珊胡大海作。",
        "from": "T85n2829_001:1268b22_4",
        "context_with_next_sentence": false
    }
]