[
    {
        "source_sentence": "維摩詰所說經卷十二",
        "from": "X19n0347_012:0572b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見阿閦佛品",
        "from": "X19n0347_012:0572b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "X19n0347_012:0572b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問維摩詰。",
        "from": "X19n0347_012:0572b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲見如來。",
        "from": "X19n0347_012:0572b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為以何等。",
        "from": "X19n0347_012:0572b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀如來乎。",
        "from": "X19n0347_012:0572b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰言。",
        "from": "X19n0347_012:0572b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如自觀身實相。",
        "from": "X19n0347_012:0572b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀佛亦然。",
        "from": "X19n0347_012:0572b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀如來。",
        "from": "X19n0347_012:0572b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前際不來。",
        "from": "X19n0347_012:0572b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後際不去。",
        "from": "X19n0347_012:0572b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則不住。",
        "from": "X19n0347_012:0572b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀色。",
        "from": "X19n0347_012:0572b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀色如。",
        "from": "X19n0347_012:0572c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀色性。",
        "from": "X19n0347_012:0572c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀受想行識。",
        "from": "X19n0347_012:0572c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀識如。",
        "from": "X19n0347_012:0572c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀識性。",
        "from": "X19n0347_012:0572c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非四大起。",
        "from": "X19n0347_012:0572c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同於虗空。",
        "from": "X19n0347_012:0572c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六入無積。",
        "from": "X19n0347_012:0572c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼耳鼻舌身心已過。",
        "from": "X19n0347_012:0572c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不在三界。",
        "from": "X19n0347_012:0572c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三垢已離。",
        "from": "X19n0347_012:0572c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順三脫門。",
        "from": "X19n0347_012:0572c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足三明(順三脫無相)。",
        "from": "X19n0347_012:0572c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與無明等。",
        "from": "X19n0347_012:0572c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不一相。",
        "from": "X19n0347_012:0572c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不異相。",
        "from": "X19n0347_012:0572c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自相。",
        "from": "X19n0347_012:0572c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不他相。",
        "from": "X19n0347_012:0572c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非無相。",
        "from": "X19n0347_012:0572c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非取相。",
        "from": "X19n0347_012:0572c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不此岸。",
        "from": "X19n0347_012:0572c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不彼岸。",
        "from": "X19n0347_012:0572c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不中流而化眾生。",
        "from": "X19n0347_012:0572c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀於寂滅。",
        "from": "X19n0347_012:0572c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不永滅。",
        "from": "X19n0347_012:0572c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不此不彼。",
        "from": "X19n0347_012:0572c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以此。",
        "from": "X19n0347_012:0572c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以彼。",
        "from": "X19n0347_012:0572c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以智知。",
        "from": "X19n0347_012:0572c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以識識。",
        "from": "X19n0347_012:0572c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無晦無明。",
        "from": "X19n0347_012:0572c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無名無相。",
        "from": "X19n0347_012:0572c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無強無弱。",
        "from": "X19n0347_012:0572c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非淨非穢。",
        "from": "X19n0347_012:0572c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不在方。",
        "from": "X19n0347_012:0572c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離方。",
        "from": "X19n0347_012:0572c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有無。",
        "from": "X19n0347_012:0572c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非無為。",
        "from": "X19n0347_012:0572c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無示無說。",
        "from": "X19n0347_012:0572c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不施不慳。",
        "from": "X19n0347_012:0572c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不戒不犯。",
        "from": "X19n0347_012:0572c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不忍不恚。",
        "from": "X19n0347_012:0572c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不進不怠。",
        "from": "X19n0347_012:0572c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不定不亂。",
        "from": "X19n0347_012:0572c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不智不愚。",
        "from": "X19n0347_012:0572c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不誠不欺不來不去。",
        "from": "X19n0347_012:0572c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出不入。",
        "from": "X19n0347_012:0572c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切言語道斷。",
        "from": "X19n0347_012:0572c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非福田。",
        "from": "X19n0347_012:0572c11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非不福田(無相之體莫知其畔)。",
        "from": "X19n0347_012:0572c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非應供養。",
        "from": "X19n0347_012:0572c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非不應供養。",
        "from": "X19n0347_012:0572c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非取非捨。",
        "from": "X19n0347_012:0572c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有相。",
        "from": "X19n0347_012:0572c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非無相。",
        "from": "X19n0347_012:0572c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同真際。",
        "from": "X19n0347_012:0572c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等法性。",
        "from": "X19n0347_012:0572c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可稱。",
        "from": "X19n0347_012:0572c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可量。",
        "from": "X19n0347_012:0572c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過諸稱量。",
        "from": "X19n0347_012:0572c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非大非小。",
        "from": "X19n0347_012:0572c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非見非聞。",
        "from": "X19n0347_012:0572c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非覺非知。",
        "from": "X19n0347_012:0572c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離眾結縛。",
        "from": "X19n0347_012:0572c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等諸智。",
        "from": "X19n0347_012:0572c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同眾生。",
        "from": "X19n0347_012:0572c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸法無分別。",
        "from": "X19n0347_012:0572c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切無得無失。",
        "from": "X19n0347_012:0572c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無濁無惱。",
        "from": "X19n0347_012:0572c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無作無起。",
        "from": "X19n0347_012:0572c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生無滅無畏無憂。",
        "from": "X19n0347_012:0572c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無喜無厭。",
        "from": "X19n0347_012:0572c16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無已有。",
        "from": "X19n0347_012:0572c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無當有。",
        "from": "X19n0347_012:0572c17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無今有。",
        "from": "X19n0347_012:0572c17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以一切言說分別顯示(都結之也)。",
        "from": "X19n0347_012:0572c17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X19n0347_012:0572c18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來身為若此。",
        "from": "X19n0347_012:0572c18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是觀。",
        "from": "X19n0347_012:0572c18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以斯觀者。",
        "from": "X19n0347_012:0572c18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為正觀。",
        "from": "X19n0347_012:0573a01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若他觀者。",
        "from": "X19n0347_012:0573a01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為邪觀。",
        "from": "X19n0347_012:0573a01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時舍利弗問維摩詰。",
        "from": "X19n0347_012:0573a01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於何沒。",
        "from": "X19n0347_012:0573a02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而來生此。",
        "from": "X19n0347_012:0573a02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰言。",
        "from": "X19n0347_012:0573a02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝所得法。",
        "from": "X19n0347_012:0573a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有沒生乎。",
        "from": "X19n0347_012:0573a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗言。",
        "from": "X19n0347_012:0573a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無沒生也。",
        "from": "X19n0347_012:0573a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸法無沒生相。",
        "from": "X19n0347_012:0573a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何問言。",
        "from": "X19n0347_012:0573a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於何沒而來生此。",
        "from": "X19n0347_012:0573a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何。",
        "from": "X19n0347_012:0573a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如幻師。",
        "from": "X19n0347_012:0573a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻作男女。",
        "from": "X19n0347_012:0573a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧沒生耶。",
        "from": "X19n0347_012:0573a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗言。",
        "from": "X19n0347_012:0573a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無沒生也。",
        "from": "X19n0347_012:0573a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝豈不聞佛說諸法如幻相乎。",
        "from": "X19n0347_012:0573a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰如是。",
        "from": "X19n0347_012:0573a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切法。",
        "from": "X19n0347_012:0573a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如幻相者。",
        "from": "X19n0347_012:0573a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何問言。",
        "from": "X19n0347_012:0573a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於何沒而來生此。",
        "from": "X19n0347_012:0573a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗。",
        "from": "X19n0347_012:0573a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒者。",
        "from": "X19n0347_012:0573a08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為虗誑法壞敗之相。",
        "from": "X19n0347_012:0573a08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生者。",
        "from": "X19n0347_012:0573a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為虗誑法相續之相。",
        "from": "X19n0347_012:0573a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩雖沒。",
        "from": "X19n0347_012:0573a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不盡善本。",
        "from": "X19n0347_012:0573a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖生。",
        "from": "X19n0347_012:0573a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不長諸惡。",
        "from": "X19n0347_012:0573a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時佛告舍利弗。",
        "from": "X19n0347_012:0573a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有國名妙喜。",
        "from": "X19n0347_012:0573a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛號無動。",
        "from": "X19n0347_012:0573a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是維摩詰。",
        "from": "X19n0347_012:0573a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼國沒。",
        "from": "X19n0347_012:0573a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而來生此。",
        "from": "X19n0347_012:0573a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗言。",
        "from": "X19n0347_012:0573a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾有也。",
        "from": "X19n0347_012:0573a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X19n0347_012:0573a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人乃能捨清淨土。",
        "from": "X19n0347_012:0573a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而來樂此多怒害處。",
        "from": "X19n0347_012:0573a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰語舍利弗。",
        "from": "X19n0347_012:0573a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何。",
        "from": "X19n0347_012:0573a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日光出時。",
        "from": "X19n0347_012:0573a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與冥合乎。",
        "from": "X19n0347_012:0573a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰不也。",
        "from": "X19n0347_012:0573a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日光出時。",
        "from": "X19n0347_012:0573a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無眾冥。",
        "from": "X19n0347_012:0573a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰言。",
        "from": "X19n0347_012:0573a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫日何故行閻浮根。",
        "from": "X19n0347_012:0573a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X19n0347_012:0573a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以明照為之除冥。",
        "from": "X19n0347_012:0573a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰言。",
        "from": "X19n0347_012:0573a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如是。",
        "from": "X19n0347_012:0573a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖生不淨佛土。",
        "from": "X19n0347_012:0573a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為化眾生。",
        "from": "X19n0347_012:0573a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與愚暗而共合也。",
        "from": "X19n0347_012:0573a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但滅眾生煩惱闇耳。",
        "from": "X19n0347_012:0573a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時大眾。",
        "from": "X19n0347_012:0573a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴仰欲見妙喜世界無動如來。",
        "from": "X19n0347_012:0573a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及其菩薩聲聞之眾。",
        "from": "X19n0347_012:0573a19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛知一切眾會所念。",
        "from": "X19n0347_012:0573a19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告維摩詰言。",
        "from": "X19n0347_012:0573a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "X19n0347_012:0573a20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為此眾會。",
        "from": "X19n0347_012:0573a20_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現妙喜國無動如來。",
        "from": "X19n0347_012:0573a20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩。",
        "from": "X19n0347_012:0573a21_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞之眾。",
        "from": "X19n0347_012:0573a21_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾皆欲見。",
        "from": "X19n0347_012:0573a21_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是維摩詰心念。",
        "from": "X19n0347_012:0573a21_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當不起於座。",
        "from": "X19n0347_012:0573a22_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "接妙喜國。",
        "from": "X19n0347_012:0573a22_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵圍山川。",
        "from": "X19n0347_012:0573a22_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溪谷江河。",
        "from": "X19n0347_012:0573a22_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海泉源。",
        "from": "X19n0347_012:0573a23_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌諸山。",
        "from": "X19n0347_012:0573a23_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及日月星宿。",
        "from": "X19n0347_012:0573a23_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍鬼神。",
        "from": "X19n0347_012:0573a23_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵天等宮。",
        "from": "X19n0347_012:0573a24_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸菩薩聲聞之眾。",
        "from": "X19n0347_012:0573a24_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城邑聚落。",
        "from": "X19n0347_012:0573a24_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男女大小。",
        "from": "X19n0347_012:0573a24_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無動如來。",
        "from": "X19n0347_012:0573b01_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及菩提樹。",
        "from": "X19n0347_012:0573b01_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸妙蓮華。",
        "from": "X19n0347_012:0573b01_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於十方。",
        "from": "X19n0347_012:0573b01_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作佛事者。",
        "from": "X19n0347_012:0573b02_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三道寶階。",
        "from": "X19n0347_012:0573b02_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從閻浮提。",
        "from": "X19n0347_012:0573b02_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至忉利天。",
        "from": "X19n0347_012:0573b02_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此寶階。",
        "from": "X19n0347_012:0573b03_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天來下。",
        "from": "X19n0347_012:0573b03_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉為禮敬無動如來。",
        "from": "X19n0347_012:0573b03_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽受經法。",
        "from": "X19n0347_012:0573b03_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻浮提人。",
        "from": "X19n0347_012:0573b04_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦登其階。",
        "from": "X19n0347_012:0573b04_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上昇忉利。",
        "from": "X19n0347_012:0573b04_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見彼諸天。",
        "from": "X19n0347_012:0573b04_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙喜世界。",
        "from": "X19n0347_012:0573b05_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就如是無量功德。",
        "from": "X19n0347_012:0573b05_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上至阿迦尼吒天。",
        "from": "X19n0347_012:0573b05_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至水際。",
        "from": "X19n0347_012:0573b06_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手斷取。",
        "from": "X19n0347_012:0573b06_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如陶家輪。",
        "from": "X19n0347_012:0573b06_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入此世界。",
        "from": "X19n0347_012:0573b06_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶持華鬘。",
        "from": "X19n0347_012:0573b07_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示一切眾。",
        "from": "X19n0347_012:0573b07_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是念已。",
        "from": "X19n0347_012:0573b07_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入於三昧。",
        "from": "X19n0347_012:0573b07_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現神通力。",
        "from": "X19n0347_012:0573b07_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其右手。",
        "from": "X19n0347_012:0573b08_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷取妙喜世界。",
        "from": "X19n0347_012:0573b08_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於此土。",
        "from": "X19n0347_012:0573b08_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼得神通菩薩。",
        "from": "X19n0347_012:0573b08_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及聲聞眾。",
        "from": "X19n0347_012:0573b09_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并餘天人。",
        "from": "X19n0347_012:0573b09_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱發聲言。",
        "from": "X19n0347_012:0573b09_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯然世尊。",
        "from": "X19n0347_012:0573b09_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰取我去。",
        "from": "X19n0347_012:0573b10_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願見救護。",
        "from": "X19n0347_012:0573b10_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無動佛言。",
        "from": "X19n0347_012:0573b10_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我所為。",
        "from": "X19n0347_012:0573b10_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是維摩詰神力所作。",
        "from": "X19n0347_012:0573b11_90",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘未得神通者。",
        "from": "X19n0347_012:0573b11_91",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺不知己之所往。",
        "from": "X19n0347_012:0573b11_92",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙喜世界。",
        "from": "X19n0347_012:0573b12_93",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖入此土。",
        "from": "X19n0347_012:0573b12_94",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不增減。",
        "from": "X19n0347_012:0573b12_95",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是世界。",
        "from": "X19n0347_012:0573b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不迫隘。",
        "from": "X19n0347_012:0573b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如本無異。",
        "from": "X19n0347_012:0573b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼佛。",
        "from": "X19n0347_012:0573b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告諸大眾。",
        "from": "X19n0347_012:0573b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等且觀妙喜世界。",
        "from": "X19n0347_012:0573b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無動如來。",
        "from": "X19n0347_012:0573b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國嚴飾。",
        "from": "X19n0347_012:0573b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行淨。",
        "from": "X19n0347_012:0573b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子清白。",
        "from": "X19n0347_012:0573b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆曰。",
        "from": "X19n0347_012:0573b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯然已見。",
        "from": "X19n0347_012:0573b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "X19n0347_012:0573b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩。",
        "from": "X19n0347_012:0573b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得如是清淨佛土。",
        "from": "X19n0347_012:0573b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當學無動如來所行之道。",
        "from": "X19n0347_012:0573b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現此妙喜國時。",
        "from": "X19n0347_012:0573b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑婆世界。",
        "from": "X19n0347_012:0573b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四那由他人。",
        "from": "X19n0347_012:0573b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發阿耨多羅三藐三菩提心。",
        "from": "X19n0347_012:0573b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆願生於妙喜佛土。",
        "from": "X19n0347_012:0573b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼佛。",
        "from": "X19n0347_012:0573b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即記之曰。",
        "from": "X19n0347_012:0573b19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生彼國。",
        "from": "X19n0347_012:0573b19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時妙喜世界。",
        "from": "X19n0347_012:0573b19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此國土。",
        "from": "X19n0347_012:0573b20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所應饒益。",
        "from": "X19n0347_012:0573b20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其事訖已。",
        "from": "X19n0347_012:0573b20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還復本處。",
        "from": "X19n0347_012:0573b20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉眾皆見。",
        "from": "X19n0347_012:0573b21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告舍利弗。",
        "from": "X19n0347_012:0573b21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝見此妙喜世界。",
        "from": "X19n0347_012:0573b21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無動佛不。",
        "from": "X19n0347_012:0573b21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯然已見。",
        "from": "X19n0347_012:0573b22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X19n0347_012:0573b22_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願使一切眾生。",
        "from": "X19n0347_012:0573b22_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得清淨土。",
        "from": "X19n0347_012:0573b22_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無動佛。",
        "from": "X19n0347_012:0573b23_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲神通力。",
        "from": "X19n0347_012:0573b23_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如維摩詰。",
        "from": "X19n0347_012:0573b23_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X19n0347_012:0573b23_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等快得善利。",
        "from": "X19n0347_012:0573b23_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見是人。",
        "from": "X19n0347_012:0573b24_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近供養。",
        "from": "X19n0347_012:0573b24_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其諸眾生。",
        "from": "X19n0347_012:0573b24_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若今現在。",
        "from": "X19n0347_012:0573b24_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛滅後。",
        "from": "X19n0347_012:0573c01_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此經者。",
        "from": "X19n0347_012:0573c01_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得善利。",
        "from": "X19n0347_012:0573c01_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復聞已。",
        "from": "X19n0347_012:0573c01_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信解受持。",
        "from": "X19n0347_012:0573c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦解說。",
        "from": "X19n0347_012:0573c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法修行。",
        "from": "X19n0347_012:0573c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有手得是經典者。",
        "from": "X19n0347_012:0573c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便為已得法寶之藏。",
        "from": "X19n0347_012:0573c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有讀誦。",
        "from": "X19n0347_012:0573c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解釋其義。",
        "from": "X19n0347_012:0573c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說修行。",
        "from": "X19n0347_012:0573c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為諸佛之所護念。",
        "from": "X19n0347_012:0573c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有供養如是人者。",
        "from": "X19n0347_012:0573c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知則為供養於佛。",
        "from": "X19n0347_012:0573c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有書持此經卷者。",
        "from": "X19n0347_012:0573c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知其室即有如來。",
        "from": "X19n0347_012:0573c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞是經。",
        "from": "X19n0347_012:0573c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能隨喜者。",
        "from": "X19n0347_012:0573c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯人則為趣一切智。",
        "from": "X19n0347_012:0573c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能信解此經。",
        "from": "X19n0347_012:0573c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一四句偈。",
        "from": "X19n0347_012:0573c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他說者。",
        "from": "X19n0347_012:0573c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此人。",
        "from": "X19n0347_012:0573c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是受阿耨多羅三藐三",
        "from": "X19n0347_012:0573c08_2",
        "context_with_next_sentence": false
    }
]