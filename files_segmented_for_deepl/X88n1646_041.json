[
    {
        "source_sentence": "居士傳四十一",
        "from": "X88n1646_041:0255b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楊唐戈孫朱郭郝杜二吳張傳",
        "from": "X88n1646_041:0255b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楊邦華名嘉褘。",
        "from": "X88n1646_041:0255b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江西泰和人。",
        "from": "X88n1646_041:0255b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬歷中諸生也。",
        "from": "X88n1646_041:0255b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少好學。",
        "from": "X88n1646_041:0255b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於書無所不窺。",
        "from": "X88n1646_041:0255b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而潛心內典。",
        "from": "X88n1646_041:0255b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十三持不殺戒。",
        "from": "X88n1646_041:0255b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蚤虱無所傷。",
        "from": "X88n1646_041:0255b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至二十餘入南京國子監。",
        "from": "X88n1646_041:0255b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄疾作。",
        "from": "X88n1646_041:0255b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢遊地獄。",
        "from": "X88n1646_041:0255b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見地藏菩薩於冥陽殿。",
        "from": "X88n1646_041:0255b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺而放諸生物。",
        "from": "X88n1646_041:0255b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延僧誦經。",
        "from": "X88n1646_041:0255b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱佛號。",
        "from": "X88n1646_041:0255b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而謂人曰。",
        "from": "X88n1646_041:0255b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾將逝矣。",
        "from": "X88n1646_041:0255b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青蓮花現吾前。",
        "from": "X88n1646_041:0255b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非淨土境乎。",
        "from": "X88n1646_041:0255b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂晝夜唱佛號不絕。",
        "from": "X88n1646_041:0255c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命侍者息燭曰。",
        "from": "X88n1646_041:0255c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾常在光明中。",
        "from": "X88n1646_041:0255c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須燭也。",
        "from": "X88n1646_041:0255c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問何所見。",
        "from": "X88n1646_041:0255c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰蓮開四色。",
        "from": "X88n1646_041:0255c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問見彌陀否。",
        "from": "X88n1646_041:0255c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰見彌陀現千丈身。",
        "from": "X88n1646_041:0255c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀音。",
        "from": "X88n1646_041:0255c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰身與彌陀等。",
        "from": "X88n1646_041:0255c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟不見勢至耳。",
        "from": "X88n1646_041:0255c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖忽躍起拈香曰。",
        "from": "X88n1646_041:0255c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌陀經功德不可說不可說不可說。",
        "from": "X88n1646_041:0255c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾已得上品生矣。",
        "from": "X88n1646_041:0255c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂然而逝(往生傳)。",
        "from": "X88n1646_041:0255c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐體如名廷任。",
        "from": "X88n1646_041:0255c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浙江蘭溪諸生也。",
        "from": "X88n1646_041:0255c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天性醇慤。",
        "from": "X88n1646_041:0255c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躬孝友之行。",
        "from": "X88n1646_041:0255c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而覺世無常。",
        "from": "X88n1646_041:0255c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傾心至道。",
        "from": "X88n1646_041:0255c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參雲棲宏公。",
        "from": "X88n1646_041:0255c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受念佛三昧。",
        "from": "X88n1646_041:0255c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂力行之。",
        "from": "X88n1646_041:0255c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱十三年如一日。",
        "from": "X88n1646_041:0255c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年六十。",
        "from": "X88n1646_041:0255c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當仲冬之旦。",
        "from": "X88n1646_041:0255c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂諸子曰。",
        "from": "X88n1646_041:0255c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "新春十有一日吾行矣。",
        "from": "X88n1646_041:0255c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至期。",
        "from": "X88n1646_041:0255c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盥漱整衣端坐手結印口稱佛號微笑而逝。",
        "from": "X88n1646_041:0255c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事在萬歷三十一年(往生傳)。",
        "from": "X88n1646_041:0255c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戈以安錢塘人。",
        "from": "X88n1646_041:0255c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事雲棲宏公為師。",
        "from": "X88n1646_041:0255c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法名廣泰。",
        "from": "X88n1646_041:0255c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事親孝。",
        "from": "X88n1646_041:0255c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好行陰德。",
        "from": "X88n1646_041:0255c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚歲奉佛甚虔。",
        "from": "X88n1646_041:0255c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與僧元素結春秋二社為念佛會。",
        "from": "X88n1646_041:0255c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦華嚴經。",
        "from": "X88n1646_041:0255c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而曰。",
        "from": "X88n1646_041:0255c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾大限迫矣。",
        "from": "X88n1646_041:0255c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為西歸計。",
        "from": "X88n1646_041:0255c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂閉一室習禪誦。",
        "from": "X88n1646_041:0255c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨夕不輟。",
        "from": "X88n1646_041:0255c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預尅歸期。",
        "from": "X88n1646_041:0255c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前二日家人來視甚悲。",
        "from": "X88n1646_041:0255c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以安曰。",
        "from": "X88n1646_041:0255c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生必有滅。",
        "from": "X88n1646_041:0255c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奚悲為。",
        "from": "X88n1646_041:0255c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾方凝神淨域。",
        "from": "X88n1646_041:0255c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面覲彌陀。",
        "from": "X88n1646_041:0255c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若等勿以情愛亂我正念。",
        "from": "X88n1646_041:0255c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請元素至。",
        "from": "X88n1646_041:0255c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共唱佛號。",
        "from": "X88n1646_041:0255c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期而化(往生傳)。",
        "from": "X88n1646_041:0255c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孫叔子江南桐城人。",
        "from": "X88n1646_041:0255c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父鏡吾居士。",
        "from": "X88n1646_041:0255c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀雲棲彌陀疏抄。",
        "from": "X88n1646_041:0255c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喟然歎曰。",
        "from": "X88n1646_041:0255c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至哉妙用。",
        "from": "X88n1646_041:0255c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋乾轉坤。",
        "from": "X88n1646_041:0255c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂十世古今始終不離於當念。",
        "from": "X88n1646_041:0255c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其惟念佛一門乎。",
        "from": "X88n1646_041:0255c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑄阿彌陀佛像。",
        "from": "X88n1646_041:0255c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按四十八願以為莊嚴。",
        "from": "X88n1646_041:0255c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像成送之雲棲。",
        "from": "X88n1646_041:0255c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因乞法名為廣寓。",
        "from": "X88n1646_041:0255c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱弟子叔。",
        "from": "X88n1646_041:0255c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子年十二從焉。",
        "from": "X88n1646_041:0255c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂受五戒。",
        "from": "X88n1646_041:0255c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法名大圩。",
        "from": "X88n1646_041:0255c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸而斷葷血。",
        "from": "X88n1646_041:0255c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄科舉業。",
        "from": "X88n1646_041:0255c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修念佛三昧。",
        "from": "X88n1646_041:0255c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤苦不惜身命。",
        "from": "X88n1646_041:0255c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄見兩比邱持蓮花立於前曰。",
        "from": "X88n1646_041:0255c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孺子善哉。",
        "from": "X88n1646_041:0256a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心淨土。",
        "from": "X88n1646_041:0256a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復見化人誦金剛經一晝夜。",
        "from": "X88n1646_041:0256a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃瞿然起坐曰。",
        "from": "X88n1646_041:0256a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌陀觀音皆來迎我。",
        "from": "X88n1646_041:0256a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結金剛拳印。",
        "from": "X88n1646_041:0256a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高唱阿彌陀佛數聲。",
        "from": "X88n1646_041:0256a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泊然而寂。",
        "from": "X88n1646_041:0256a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有淨土十二時歌傳於世。",
        "from": "X88n1646_041:0256a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其室中歲產瑞芝。",
        "from": "X88n1646_041:0256a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒之歲有大如斗者。",
        "from": "X88n1646_041:0256a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其色或如金。",
        "from": "X88n1646_041:0256a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或如玉。",
        "from": "X88n1646_041:0256a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或如赤白輪(往生傳．雲棲法彙)。",
        "from": "X88n1646_041:0256a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱綱順天貢士。",
        "from": "X88n1646_041:0256a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官終府同知。",
        "from": "X88n1646_041:0256a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專修淨業。",
        "from": "X88n1646_041:0256a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日誦佛名三萬聲。",
        "from": "X88n1646_041:0256a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積十五年。",
        "from": "X88n1646_041:0256a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日坐榻上。",
        "from": "X88n1646_041:0256a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方提珠誦佛名。",
        "from": "X88n1646_041:0256a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽異香滿室。",
        "from": "X88n1646_041:0256a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰佛來也。",
        "from": "X88n1646_041:0256a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂逝(徃生傳)。",
        "from": "X88n1646_041:0256a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郭大林湯陰人。",
        "from": "X88n1646_041:0256a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦專志淨業。",
        "from": "X88n1646_041:0256a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年七十六。",
        "from": "X88n1646_041:0256a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日謂其子曰。",
        "from": "X88n1646_041:0256a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明午吾去矣。",
        "from": "X88n1646_041:0256a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無疾而逝(徃生傳)。",
        "from": "X88n1646_041:0256a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉通志順天人。",
        "from": "X88n1646_041:0256a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精勤念佛。",
        "from": "X88n1646_041:0256a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年五十二得疾。",
        "from": "X88n1646_041:0256a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念益切。",
        "from": "X88n1646_041:0256a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其法侶李白齋先卒。",
        "from": "X88n1646_041:0256a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通志絕而復甦。",
        "from": "X88n1646_041:0256a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂家人曰。",
        "from": "X88n1646_041:0256a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白齋與我當同生淨土。",
        "from": "X88n1646_041:0256a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已維舟相待矣。",
        "from": "X88n1646_041:0256a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我易衣掛念珠於項。",
        "from": "X88n1646_041:0256a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從之。",
        "from": "X88n1646_041:0256a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂逝(徃生傳)。",
        "from": "X88n1646_041:0256a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郝熈載錢塘諸生。",
        "from": "X88n1646_041:0256a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人忠信不欺。",
        "from": "X88n1646_041:0256a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚歸雲棲之教法。",
        "from": "X88n1646_041:0256a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名廣定。",
        "from": "X88n1646_041:0256a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居家禪誦無間。",
        "from": "X88n1646_041:0256a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而得疾。",
        "from": "X88n1646_041:0256a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日忽舉首視窗外。",
        "from": "X88n1646_041:0256a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂其子曰。",
        "from": "X88n1646_041:0256a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者別一乾坤矣。",
        "from": "X88n1646_041:0256a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜半云。",
        "from": "X88n1646_041:0256a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛坐蓮花臺現吾前。",
        "from": "X88n1646_041:0256a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾往矣。",
        "from": "X88n1646_041:0256a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂逝。",
        "from": "X88n1646_041:0256a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事在萬歷三十九年(往生傳)。",
        "from": "X88n1646_041:0256a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杜居士遺其名。",
        "from": "X88n1646_041:0256a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順天宛平人也。",
        "from": "X88n1646_041:0256a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱西山瑞光寺側古齋堂中三十年。",
        "from": "X88n1646_041:0256a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專志念佛。",
        "from": "X88n1646_041:0256a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對人惟合掌稱佛號。",
        "from": "X88n1646_041:0256a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預知將終。",
        "from": "X88n1646_041:0256a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮懺九日。",
        "from": "X88n1646_041:0256a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦至懺中懇切語。",
        "from": "X88n1646_041:0256a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輙流涕哽咽。",
        "from": "X88n1646_041:0256a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂絕食。",
        "from": "X88n1646_041:0256a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日飲水少許。",
        "from": "X88n1646_041:0256a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺畢坐脫。",
        "from": "X88n1646_041:0256a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浹旬始殮。",
        "from": "X88n1646_041:0256a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏色如生。",
        "from": "X88n1646_041:0256a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有五色雲盤旋屋上。",
        "from": "X88n1646_041:0256a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中人傳異之(徃生傳)。",
        "from": "X88n1646_041:0256a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳大恩浙江仁和人。",
        "from": "X88n1646_041:0256b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁慈好施。",
        "from": "X88n1646_041:0256b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恤孤窮。",
        "from": "X88n1646_041:0256b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護生命。",
        "from": "X88n1646_041:0256b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄉里稱之。",
        "from": "X88n1646_041:0256b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而皈心佛法。",
        "from": "X88n1646_041:0256b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨夕誦經唱佛號。",
        "from": "X88n1646_041:0256b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日別眾跏趺而逝。",
        "from": "X88n1646_041:0256b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神色煥然。",
        "from": "X88n1646_041:0256b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "室有香氣。",
        "from": "X88n1646_041:0256b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事在萬歷四十年(徃生傳)。",
        "from": "X88n1646_041:0256b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳用卿名繼勛。",
        "from": "X88n1646_041:0256b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江南新安人。",
        "from": "X88n1646_041:0256b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性沉毅。",
        "from": "X88n1646_041:0256b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗜善若渴。",
        "from": "X88n1646_041:0256b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚修淨業。",
        "from": "X88n1646_041:0256b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持往生呪唱佛號。",
        "from": "X88n1646_041:0256b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日有定課。",
        "from": "X88n1646_041:0256b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞失足墮江中。",
        "from": "X88n1646_041:0256b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有物籍之。",
        "from": "X88n1646_041:0256b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流十里躍而登舟。",
        "from": "X88n1646_041:0256b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾以為神。",
        "from": "X88n1646_041:0256b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而患背疽。",
        "from": "X88n1646_041:0256b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦自若。",
        "from": "X88n1646_041:0256b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄而正念示寂(往生傳)。",
        "from": "X88n1646_041:0256b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張愛萬歷間中官也。",
        "from": "X88n1646_041:0256b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚持金剛經。",
        "from": "X88n1646_041:0256b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱數年病死。",
        "from": "X88n1646_041:0256b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至一王者所。",
        "from": "X88n1646_041:0256b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂曰。",
        "from": "X88n1646_041:0256b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝合向人間受胎。",
        "from": "X88n1646_041:0256b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰愛持金剛經。",
        "from": "X88n1646_041:0256b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願生淨土。",
        "from": "X88n1646_041:0256b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不願受胎。",
        "from": "X88n1646_041:0256b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王者曰。",
        "from": "X88n1646_041:0256b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝持經功少。",
        "from": "X88n1646_041:0256b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何。",
        "from": "X88n1646_041:0256b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛曰。",
        "from": "X88n1646_041:0256b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾聞十念成就。",
        "from": "X88n1646_041:0256b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "况其久乎。",
        "from": "X88n1646_041:0256b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王者曰。",
        "from": "X88n1646_041:0256b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且放還聽持經去。",
        "from": "X88n1646_041:0256b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既甦。",
        "from": "X88n1646_041:0256b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂去之西山碧雲寺專誦金剛經。",
        "from": "X88n1646_041:0256b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又十一年。",
        "from": "X88n1646_041:0256b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日集眾曰。",
        "from": "X88n1646_041:0256b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以持經力。",
        "from": "X88n1646_041:0256b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今西去矣。",
        "from": "X88n1646_041:0256b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沐浴更衣端坐而逝(金剛新異錄)。",
        "from": "X88n1646_041:0256b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_041:0256b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右錄雲棲往生傳而稍附益之。",
        "from": "X88n1646_041:0256b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大都聞雲棲之風而興者也。",
        "from": "X88n1646_041:0256b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其他學士大夫名節炳著者別有傳。",
        "from": "X88n1646_041:0256b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1646_041:0256b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自東林以來。",
        "from": "X88n1646_041:0256b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂邦之化莫盛於斯矣。",
        "from": "X88n1646_041:0256b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孟子曰。",
        "from": "X88n1646_041:0256b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奮乎百世之上。",
        "from": "X88n1646_041:0256b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百世之下聞者莫不興起也。",
        "from": "X88n1646_041:0256b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於親炙之者乎。",
        "from": "X88n1646_041:0256b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予於宏公亦云。",
        "from": "X88n1646_041:0256b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_041:0256b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者別一乾坤矣。",
        "from": "X88n1646_041:0256b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如語者。",
        "from": "X88n1646_041:0256b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實語者。",
        "from": "X88n1646_041:0256b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不誑語者。",
        "from": "X88n1646_041:0256b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不到此地步。",
        "from": "X88n1646_041:0256b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行尚少證驗在。",
        "from": "X88n1646_041:0256b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以明為如語者。",
        "from": "X88n1646_041:0256b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實語者。",
        "from": "X88n1646_041:0256b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不誑語者。",
        "from": "X88n1646_041:0256b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以十法界觀之。",
        "from": "X88n1646_041:0256b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便是十箇乾坤。",
        "from": "X88n1646_041:0256b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法界是佛乾坤。",
        "from": "X88n1646_041:0256b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩法界是菩薩乾坤。",
        "from": "X88n1646_041:0256b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣覺法界是緣覺乾坤。",
        "from": "X88n1646_041:0256b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞法界是聲聞乾坤。",
        "from": "X88n1646_041:0256b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是四聖法界也。",
        "from": "X88n1646_041:0256b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為四聖乾坤。",
        "from": "X88n1646_041:0256c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天法界是天乾坤。",
        "from": "X88n1646_041:0256c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修羅法界是修羅乾坤。",
        "from": "X88n1646_041:0256c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人法界是人乾坤。",
        "from": "X88n1646_041:0256c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旁生法界是旁生乾坤。",
        "from": "X88n1646_041:0256c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼法界是餓鬼乾坤。",
        "from": "X88n1646_041:0256c03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄法界是地獄乾坤。",
        "from": "X88n1646_041:0256c03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是六凡法界也。",
        "from": "X88n1646_041:0256c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為六凡乾坤。",
        "from": "X88n1646_041:0256c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行到得超凡入聖時候。",
        "from": "X88n1646_041:0256c04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖境自然現前。",
        "from": "X88n1646_041:0256c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非別有一乾坤耶。",
        "from": "X88n1646_041:0256c05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以明其證驗。",
        "from": "X88n1646_041:0256c06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以十法界之因觀之。",
        "from": "X88n1646_041:0256c06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念起處於十惡境上生心即是地獄界因。",
        "from": "X88n1646_041:0256c06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了地獄乾坤。",
        "from": "X88n1646_041:0256c07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於慳妬境上生心即是餓鬼界因。",
        "from": "X88n1646_041:0256c08_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了餓鬼乾坤。",
        "from": "X88n1646_041:0256c09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於痴婬境上生心即是畜生界因。",
        "from": "X88n1646_041:0256c09_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了畜生乾坤。",
        "from": "X88n1646_041:0256c10_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於五戒境上生心即是人界因。",
        "from": "X88n1646_041:0256c10_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了人乾坤。",
        "from": "X88n1646_041:0256c11_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於下品十善境上生心即是修羅界因。",
        "from": "X88n1646_041:0256c12_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了修羅乾坤。",
        "from": "X88n1646_041:0256c12_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於上品十善境上生心即是天界因。",
        "from": "X88n1646_041:0256c13_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了天乾坤。",
        "from": "X88n1646_041:0256c14_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四諦境上生心即是聲聞界因。",
        "from": "X88n1646_041:0256c14_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了聲聞乾坤。",
        "from": "X88n1646_041:0256c15_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於十二因緣境上生心即是緣覺界因。",
        "from": "X88n1646_041:0256c15_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了緣覺乾坤。",
        "from": "X88n1646_041:0256c16_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於六度境上生心即是菩薩界因。",
        "from": "X88n1646_041:0256c17_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了菩薩乾坤。",
        "from": "X88n1646_041:0256c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無上菩提境上生心即是佛界因。",
        "from": "X88n1646_041:0256c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不斷便造了佛乾坤。",
        "from": "X88n1646_041:0256c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此觀之。",
        "from": "X88n1646_041:0256c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從樂邦生心念念不斷。",
        "from": "X88n1646_041:0256c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有不往生者乎。",
        "from": "X88n1646_041:0256c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有不往生者必其所發之因未真也。",
        "from": "X88n1646_041:0256c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必其念佛有間斷也。",
        "from": "X88n1646_041:0256c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰修行尚少證驗在。",
        "from": "X88n1646_041:0256c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎此語。",
        "from": "X88n1646_041:0256c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一以堅人決定",
        "from": "X88n1646_041:0256c22_2",
        "context_with_next_sentence": false
    }
]