[
    {
        "source_sentence": "播般曩結使波(唐云步擲)金剛念誦儀　歸命金剛手　　諸佛所依者　具普賢眾行　　住是本有身　無始無終寂　　妙用施諸願　摩王順三毒　　改劫故調柔　拯救諸有情　　從凡入佛地　現世皆成就　　今演念誦義次若有比丘比丘尼優婆塞優婆夷。",
        "from": "T21n1232_001:0169b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂修步擲明王心真言者。",
        "from": "T21n1232_001:0169b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如法治地建立道場。",
        "from": "T21n1232_001:0169b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修先行門面東而坐。",
        "from": "T21n1232_001:0169b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須供養飲食香華。",
        "from": "T21n1232_001:0169b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力當陳務令清潔。",
        "from": "T21n1232_001:0169b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道場已遍禮諸佛。",
        "from": "T21n1232_001:0169b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心歸依願登正覺。",
        "from": "T21n1232_001:0169b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結跏趺坐或復半跏。",
        "from": "T21n1232_001:0169b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香泥塗手備諸印契。",
        "from": "T21n1232_001:0169b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明三部及護身。",
        "from": "T21n1232_001:0169b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知諸教儀此略不抄。",
        "from": "T21n1232_001:0169b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次乃端身正坐息諸緣慮。",
        "from": "T21n1232_001:0169b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀己身皆由先世之因。",
        "from": "T21n1232_001:0169b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成此四大五蘊。",
        "from": "T21n1232_001:0169b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一一求實不得無常敗壞。",
        "from": "T21n1232_001:0169b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速起速滅即色即空。",
        "from": "T21n1232_001:0169b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是了了決定信解已。",
        "from": "T21n1232_001:0169b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其能觀之不可泯滅。",
        "from": "T21n1232_001:0169b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成真實智。",
        "from": "T21n1232_001:0169b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓周法界。",
        "from": "T21n1232_001:0169b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量等虛空。",
        "from": "T21n1232_001:0169b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲故從真起用。",
        "from": "T21n1232_001:0169b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃想己身形如本尊威儀亦等不一不異。",
        "from": "T21n1232_001:0169b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結前三昧金剛杵契。",
        "from": "T21n1232_001:0169b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印於心誦心真言曰。",
        "from": "T21n1232_001:0169b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)纈哩(二合)儒[口*臨](二合三)由此契及真言加持。",
        "from": "T21n1232_001:0169b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者心如本尊。",
        "from": "T21n1232_001:0169b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及舉契印頭誦真言。",
        "from": "T21n1232_001:0169b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)部[口*臨](二合二)",
        "from": "T21n1232_001:0169b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此契及真言加持故。",
        "from": "T21n1232_001:0169c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶同本尊。",
        "from": "T21n1232_001:0169c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以契印額右肩左肩及心喉。",
        "from": "T21n1232_001:0169c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆誦被甲冑真言。",
        "from": "T21n1232_001:0169c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)儒[口*臨](二合二)",
        "from": "T21n1232_001:0169c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此契及真言加持故。",
        "from": "T21n1232_001:0169c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成被金剛甲冑無能嬈害。",
        "from": "T21n1232_001:0169c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如前觀行及誦真言加持故。",
        "from": "T21n1232_001:0169c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者之身與本尊無異。",
        "from": "T21n1232_001:0169c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛受記龍天歸仰。",
        "from": "T21n1232_001:0169c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定成無上正等菩提。",
        "from": "T21n1232_001:0169c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛橛契",
        "from": "T21n1232_001:0169c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相以右無名指入左無名指小指間。",
        "from": "T21n1232_001:0169c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中指入左中指頭指間。",
        "from": "T21n1232_001:0169c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左亦如之。",
        "from": "T21n1232_001:0169c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘指並頭相拄。",
        "from": "T21n1232_001:0169c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想成火焰金剛杵形。",
        "from": "T21n1232_001:0169c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指著地。",
        "from": "T21n1232_001:0169c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓而掣之。",
        "from": "T21n1232_001:0169c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掣一誦至三而止。",
        "from": "T21n1232_001:0169c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意大小標心。",
        "from": "T21n1232_001:0169c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成金剛堅固地界。",
        "from": "T21n1232_001:0169c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0169c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)枳里枳里嚩日羅(二合二)嚩日里部羅(三)滿馱滿馱(四)[合*牛]泮吒由此結契及真言加持故。",
        "from": "T21n1232_001:0169c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至金剛際悉如金剛座。",
        "from": "T21n1232_001:0169c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天魔及諸障者不為惱害。",
        "from": "T21n1232_001:0169c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次方隅金剛牆界。",
        "from": "T21n1232_001:0169c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相准前地界。",
        "from": "T21n1232_001:0169c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開二大指竪之。",
        "from": "T21n1232_001:0169c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "側如牆形。",
        "from": "T21n1232_001:0169c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右遶身三轉。",
        "from": "T21n1232_001:0169c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標心大小即成金剛堅固之城。",
        "from": "T21n1232_001:0169c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩尚不違越。",
        "from": "T21n1232_001:0169c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況諸餘難調伏者。",
        "from": "T21n1232_001:0169c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉不能近。",
        "from": "T21n1232_001:0169c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0169c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)沙羅沙羅(二)嚩日囉鉢囉迦(引)邏(三)吽泮吒行者次當想於壇中有八葉蓮華。",
        "from": "T21n1232_001:0169c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有師子之座。",
        "from": "T21n1232_001:0169c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座上有七寶樓閣。",
        "from": "T21n1232_001:0169c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂諸瓔珞繒綵幡蓋。",
        "from": "T21n1232_001:0169c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶柱行列垂妙天衣。",
        "from": "T21n1232_001:0169c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周布香雲。",
        "from": "T21n1232_001:0169c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普雨雜花奏諸音樂。",
        "from": "T21n1232_001:0169c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶瓶閼伽天妙飲食摩尼為燈。",
        "from": "T21n1232_001:0169c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀已。",
        "from": "T21n1232_001:0170a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結大虛空藏契。",
        "from": "T21n1232_001:0170a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相合掌當心。",
        "from": "T21n1232_001:0170a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蹙二頭指如寶形。",
        "from": "T21n1232_001:0170a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并舒二大指押頭指根。",
        "from": "T21n1232_001:0170a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指右押左外相交。",
        "from": "T21n1232_001:0170a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互著手皆契成。",
        "from": "T21n1232_001:0170a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T21n1232_001:0170a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)伽伽那三婆嚩嚩日囉斛由結此契及誦真言加持故。",
        "from": "T21n1232_001:0170a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所想供養等物。",
        "from": "T21n1232_001:0170a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實無異聖眾受用。",
        "from": "T21n1232_001:0170a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車輅契",
        "from": "T21n1232_001:0170a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相二手內相叉仰掌。",
        "from": "T21n1232_001:0170a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指橫相拄。",
        "from": "T21n1232_001:0170a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指各捻頭指根下。",
        "from": "T21n1232_001:0170a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想成七寶車輅。",
        "from": "T21n1232_001:0170a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛賀御乘空而去。",
        "from": "T21n1232_001:0170a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於本尊之宮。",
        "from": "T21n1232_001:0170a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)都嚕都嚕(二)吽",
        "from": "T21n1232_001:0170a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印及真言加持故。",
        "from": "T21n1232_001:0170a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶車輅至尊宮殿。",
        "from": "T21n1232_001:0170a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想大聖本尊及諸眷屬昇輅車。",
        "from": "T21n1232_001:0170a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請車輅契",
        "from": "T21n1232_001:0170a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相準前契。",
        "from": "T21n1232_001:0170a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互以大指向身撥中指。",
        "from": "T21n1232_001:0170a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫悉底哩野地尾迦南薩嚩怛他蘖多南(二)唵(二)嚩日唧擬那野(引)迦囉沙野曀呬裔呬(若奉送除來句加去句)薄伽晚(六)馺嚩訶(七)由結此契誦真言加持故。",
        "from": "T21n1232_001:0170a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾從本宮來。",
        "from": "T21n1232_001:0170a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赴於道場依空而住。",
        "from": "T21n1232_001:0170a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊三昧耶降道場契。",
        "from": "T21n1232_001:0170a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相二手內相叉作拳。",
        "from": "T21n1232_001:0170a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右大指入。",
        "from": "T21n1232_001:0170a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌左大指向身招之。",
        "from": "T21n1232_001:0170a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)嚩日囉地哩迦(二)曀呬裔呬(三若奉送除[目*壹]呬裔呬加伽車)薄伽梵(四)嚩日囉地哩迦(五)由此真言契加持故。",
        "from": "T21n1232_001:0170a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊不違本誓。",
        "from": "T21n1232_001:0170a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集於道場。",
        "from": "T21n1232_001:0170a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步擲契",
        "from": "T21n1232_001:0170b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相先正立。",
        "from": "T21n1232_001:0170b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉右足向左斷空。",
        "from": "T21n1232_001:0170b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐日右轉使頓地。",
        "from": "T21n1232_001:0170b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又移左足就右如初立。",
        "from": "T21n1232_001:0170b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃舉左足向右斷空。",
        "from": "T21n1232_001:0170b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因向左頓地屈膝。",
        "from": "T21n1232_001:0170b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃舉左手頭指已下成拳。",
        "from": "T21n1232_001:0170b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指押頭指側。",
        "from": "T21n1232_001:0170b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想執三股杵極力展臂向左擬勢。",
        "from": "T21n1232_001:0170b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手大指入掌。",
        "from": "T21n1232_001:0170b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以中名指握之。",
        "from": "T21n1232_001:0170b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指及小指皆舒之。",
        "from": "T21n1232_001:0170b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極力垂臂手背向外。",
        "from": "T21n1232_001:0170b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死出現嗔目左顧想。",
        "from": "T21n1232_001:0170b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘臂悉如本尊執持。",
        "from": "T21n1232_001:0170b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦菩薩等。",
        "from": "T21n1232_001:0170b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每想器拭之手。",
        "from": "T21n1232_001:0170b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆誦器拭真言曰。",
        "from": "T21n1232_001:0170b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵虐",
        "from": "T21n1232_001:0170b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想舉身三威焰由如劫燒。",
        "from": "T21n1232_001:0170b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹至十方一切世界。",
        "from": "T21n1232_001:0170b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作佛事照觸言悟。",
        "from": "T21n1232_001:0170b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來初成道者願速轉法輪。",
        "from": "T21n1232_001:0170b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度眾生者破其小器。",
        "from": "T21n1232_001:0170b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨涅槃者勸請久住。",
        "from": "T21n1232_001:0170b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當勸發菩薩之眾願。",
        "from": "T21n1232_001:0170b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆速證無上菩提。",
        "from": "T21n1232_001:0170b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間慎無退屈。",
        "from": "T21n1232_001:0170b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當啟發二乘之人。",
        "from": "T21n1232_001:0170b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除其小兒令具大乘甚深空慧。",
        "from": "T21n1232_001:0170b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫之界威光所及。",
        "from": "T21n1232_001:0170b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樊藏識中雜染種子。",
        "from": "T21n1232_001:0170b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離三途具普賢行。",
        "from": "T21n1232_001:0170b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傍生餓鬼盡此一形不復更受。",
        "from": "T21n1232_001:0170b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦想樊諸地獄。",
        "from": "T21n1232_001:0170b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞滅無餘罪人。",
        "from": "T21n1232_001:0170b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫發菩提心諸惡魔等。",
        "from": "T21n1232_001:0170b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇者摧伏辟除退散。",
        "from": "T21n1232_001:0170b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是量久利益既畢。",
        "from": "T21n1232_001:0170b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想收威焰集於身中。",
        "from": "T21n1232_001:0170b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後出定。",
        "from": "T21n1232_001:0170b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復如如初依法。",
        "from": "T21n1232_001:0170b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而坐。",
        "from": "T21n1232_001:0170b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上方金剛網契",
        "from": "T21n1232_001:0170b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相準前牆契二大指捻頭指下節。",
        "from": "T21n1232_001:0170b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三迊。",
        "from": "T21n1232_001:0170b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上右轉三二迊。",
        "from": "T21n1232_001:0170b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)尾塞普羅(二)娜[口*落]乞叉嚩日囉半惹囉(三)[合*牛]泮吒由此網契真言加持故。",
        "from": "T21n1232_001:0170b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當成金剛堅固之網。",
        "from": "T21n1232_001:0170b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火院密縫旋契。",
        "from": "T21n1232_001:0170b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相左手掩右手背竪二大指。",
        "from": "T21n1232_001:0170b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞身三匝。",
        "from": "T21n1232_001:0170c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想金剛牆外。",
        "from": "T21n1232_001:0170c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火焰圍繞。",
        "from": "T21n1232_001:0170c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)阿娑莽擬儞(二)[合*牛]泮吒次捧閼伽器近額想浴聖眾之足。",
        "from": "T21n1232_001:0170c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普供養契",
        "from": "T21n1232_001:0170c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相二手合掌右押左交。",
        "from": "T21n1232_001:0170c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指初分即成。",
        "from": "T21n1232_001:0170c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦想無量無邊塗香雲海末香雲海燒香雲海花鬘雲海燈明雲海飲食雲海衣服雲海。",
        "from": "T21n1232_001:0170c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切供養等物皆成清淨廣多供養普供養真言曰。",
        "from": "T21n1232_001:0170c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫薩嚩怛他蘖帝彌逾(二合一)尾濕嚩暮契藐(二)薩嚩他欠(三)鄔娜伽帝(四)娑頗羅系儚(五)誐誐曩劍(六)馺嚩訶本尊心真言曰。",
        "from": "T21n1232_001:0170c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)纈[口*臨](二合二)尾[口*臨](二合三)部[口*臨](二合四)素[口*臨](二合五)儒[口*臨](二合六)虐次復思惟己身與本尊無異。",
        "from": "T21n1232_001:0170c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持金剛子珠。",
        "from": "T21n1232_001:0170c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦次前心真言。",
        "from": "T21n1232_001:0170c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念誦時觀本尊形像。",
        "from": "T21n1232_001:0170c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或觀真言所有文字。",
        "from": "T21n1232_001:0170c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或觀本尊心上有真言字。",
        "from": "T21n1232_001:0170c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或寂靜心相應念誦。",
        "from": "T21n1232_001:0170c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不急不緩亦不太小。",
        "from": "T21n1232_001:0170c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "課限畢己心欲除息際。",
        "from": "T21n1232_001:0170c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍須良久住本尊觀。",
        "from": "T21n1232_001:0170c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復獻閼伽亦結普供養運心供養誦本真言。",
        "from": "T21n1232_001:0170c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結火院密縫契。",
        "from": "T21n1232_001:0170c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上左轉一匝即成。",
        "from": "T21n1232_001:0170c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解界次結降道場契向外撥之。",
        "from": "T21n1232_001:0170c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想聖眾歸宮。",
        "from": "T21n1232_001:0170c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結護身契。",
        "from": "T21n1232_001:0170c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前印五處。",
        "from": "T21n1232_001:0170c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦本真言。",
        "from": "T21n1232_001:0170c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦大輪金剛真言二十一遍真言(此略不寫抄如餘本所謂一種取用)由誦此真言故。",
        "from": "T21n1232_001:0170c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有違犯軌則之愆。",
        "from": "T21n1232_001:0170c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉滅無餘功不虛棄。",
        "from": "T21n1232_001:0170c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其息災增益降伏三事法。",
        "from": "T21n1232_001:0170c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣如蘇悉地經中所陳。",
        "from": "T21n1232_001:0170c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任作成就當知福祐畫像法。",
        "from": "T21n1232_001:0170c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用應肘量紲如儀清淨。",
        "from": "T21n1232_001:0171a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圖畫本尊遍身青色。",
        "from": "T21n1232_001:0171a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右顧舒右足屈左膝。",
        "from": "T21n1232_001:0171a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右上手垂下。",
        "from": "T21n1232_001:0171a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈大指入掌。",
        "from": "T21n1232_001:0171a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中名指握之。",
        "from": "T21n1232_001:0171a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒餘二指手背向外。",
        "from": "T21n1232_001:0171a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次手持桃垂下。",
        "from": "T21n1232_001:0171a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下舒掌向下。",
        "from": "T21n1232_001:0171a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌中有火焰。",
        "from": "T21n1232_001:0171a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次手鐵斧。",
        "from": "T21n1232_001:0171a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次玉環次竪擬指。",
        "from": "T21n1232_001:0171a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指上有輪。",
        "from": "T21n1232_001:0171a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次拳大指押頭指側。",
        "from": "T21n1232_001:0171a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次羂索。",
        "from": "T21n1232_001:0171a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次舒五指。",
        "from": "T21n1232_001:0171a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲長而利仰掌。",
        "from": "T21n1232_001:0171a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末手持弓。",
        "from": "T21n1232_001:0171a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右近上手三股杵。",
        "from": "T21n1232_001:0171a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒臂向上。",
        "from": "T21n1232_001:0171a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次劍。",
        "from": "T21n1232_001:0171a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次握圓石。",
        "from": "T21n1232_001:0171a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次短柄槌槌如重輪。",
        "from": "T21n1232_001:0171a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次兩隻箭。",
        "from": "T21n1232_001:0171a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次杖。",
        "from": "T21n1232_001:0171a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獨股杵。",
        "from": "T21n1232_001:0171a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次舒掌。",
        "from": "T21n1232_001:0171a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌仰頭指大指相捻勢。",
        "from": "T21n1232_001:0171a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次寶棒棒上麁近把處漸細末。",
        "from": "T21n1232_001:0171a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒掌向下。",
        "from": "T21n1232_001:0171a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌有焰鬘。",
        "from": "T21n1232_001:0171a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆散竪。",
        "from": "T21n1232_001:0171a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦色以龍為冠鬘瓔珞。",
        "from": "T21n1232_001:0171a11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手足釧及要縚等。",
        "from": "T21n1232_001:0171a12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頻眉猛視利牙出現。",
        "from": "T21n1232_001:0171a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赤色方裙赤色傘蓋。",
        "from": "T21n1232_001:0171a13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王波旬俯伏在地。",
        "from": "T21n1232_001:0171a13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而四臂通身青色。",
        "from": "T21n1232_001:0171a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴面向上求哀請命。",
        "from": "T21n1232_001:0171a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒右手五指側近額作歸命勢。",
        "from": "T21n1232_001:0171a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手拈地下。",
        "from": "T21n1232_001:0171a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手有一龍。",
        "from": "T21n1232_001:0171a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自肘後縛之。",
        "from": "T21n1232_001:0171a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮赤色而散。",
        "from": "T21n1232_001:0171a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如有大恐怖之狀。",
        "from": "T21n1232_001:0171a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭近大聖右足。",
        "from": "T21n1232_001:0171a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊左右有一金剛童子。",
        "from": "T21n1232_001:0171a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並通身赤色形體光碩。",
        "from": "T21n1232_001:0171a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右傍者。",
        "from": "T21n1232_001:0171a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持桃。",
        "from": "T21n1232_001:0171a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左執劍向下斫魔王勢。",
        "from": "T21n1232_001:0171a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮向後垂而作赤色。",
        "from": "T21n1232_001:0171a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左傍者左挽弓射魔王頭勢。",
        "from": "T21n1232_001:0171a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮髻似赤紗色。",
        "from": "T21n1232_001:0171a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之右字却是左。",
        "from": "T21n1232_001:0171a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左字却是右。",
        "from": "T21n1232_001:0171a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為隱。",
        "from": "T21n1232_001:0171a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步擲金剛修行儀軌一卷",
        "from": "T21n1232_001:0171a23_0",
        "context_with_next_sentence": false
    }
]