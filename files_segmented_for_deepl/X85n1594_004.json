[
    {
        "source_sentence": "佛祖綱目卷第四(黃字號)",
        "from": "X85n1594_004:0569c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(周孝王十三年起)丁卯(夷王元年)癸未(厲王元年)庚申(周共和元年)癸亥(周共和四年止)(癸巳)二祖阿難傳法商那和修阿難。",
        "from": "X85n1594_004:0569c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王舍城人。",
        "from": "X85n1594_004:0569c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓剎帝利。",
        "from": "X85n1594_004:0569c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父斛飰王。",
        "from": "X85n1594_004:0569c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實佛之從弟也。",
        "from": "X85n1594_004:0569c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞博達。",
        "from": "X85n1594_004:0569c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧無礙。",
        "from": "X85n1594_004:0569c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊以為總持第一。",
        "from": "X85n1594_004:0569c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞所讚歎。",
        "from": "X85n1594_004:0569c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加以宿世有大功德。",
        "from": "X85n1594_004:0569c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持法藏。",
        "from": "X85n1594_004:0569c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水傳器。",
        "from": "X85n1594_004:0569c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃命為侍者。",
        "from": "X85n1594_004:0569c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日白佛言。",
        "from": "X85n1594_004:0569c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日入城。",
        "from": "X85n1594_004:0569c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一奇特事。",
        "from": "X85n1594_004:0569c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛曰。",
        "from": "X85n1594_004:0569c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見何奇特事。",
        "from": "X85n1594_004:0569c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難曰。",
        "from": "X85n1594_004:0569c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入城見一攢樂人作舞。",
        "from": "X85n1594_004:0569c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出城總見無常。",
        "from": "X85n1594_004:0569c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛曰。",
        "from": "X85n1594_004:0569c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昨日入城。",
        "from": "X85n1594_004:0569c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見一奇特事。",
        "from": "X85n1594_004:0569c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難曰。",
        "from": "X85n1594_004:0569c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未審見何奇特事。",
        "from": "X85n1594_004:0569c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛曰。",
        "from": "X85n1594_004:0569c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我入城時。",
        "from": "X85n1594_004:0569c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一攢樂人作舞。",
        "from": "X85n1594_004:0569c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出城時亦見樂人作舞。",
        "from": "X85n1594_004:0569c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難一日問迦葉曰。",
        "from": "X85n1594_004:0569c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師兄。",
        "from": "X85n1594_004:0569c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊傳金縷袈裟外。",
        "from": "X85n1594_004:0569c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別傳箇甚麼。",
        "from": "X85n1594_004:0569c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉召阿難。",
        "from": "X85n1594_004:0569c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難應諾。",
        "from": "X85n1594_004:0569c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉曰。",
        "from": "X85n1594_004:0569c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倒却門前剎竿著。",
        "from": "X85n1594_004:0569c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難一日入竹林。",
        "from": "X85n1594_004:0569c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞比丘誦偈曰。",
        "from": "X85n1594_004:0569c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人生百歲。",
        "from": "X85n1594_004:0570a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見水老鶴。",
        "from": "X85n1594_004:0570a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如生一日。",
        "from": "X85n1594_004:0570a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得覩見之。",
        "from": "X85n1594_004:0570a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難因為正之曰。",
        "from": "X85n1594_004:0570a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不然。",
        "from": "X85n1594_004:0570a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛云。",
        "from": "X85n1594_004:0570a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人生百歲。",
        "from": "X85n1594_004:0570a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解諸佛機。",
        "from": "X85n1594_004:0570a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如生一日。",
        "from": "X85n1594_004:0570a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得解了之。",
        "from": "X85n1594_004:0570a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是比丘以聞其師。",
        "from": "X85n1594_004:0570a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其師曰。",
        "from": "X85n1594_004:0570a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難老昏矣。",
        "from": "X85n1594_004:0570a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾語是也。",
        "from": "X85n1594_004:0570a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異日阿難復經竹林。",
        "from": "X85n1594_004:0570a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見比丘誦偈如前。",
        "from": "X85n1594_004:0570a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難詰知其故。",
        "from": "X85n1594_004:0570a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因念愚癡難化。",
        "from": "X85n1594_004:0570a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入三昧。",
        "from": "X85n1594_004:0570a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求尊聖為之證。",
        "from": "X85n1594_004:0570a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是地為之動。",
        "from": "X85n1594_004:0570a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明遽發。",
        "from": "X85n1594_004:0570a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄有一聖宿大士示現。",
        "from": "X85n1594_004:0570a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為之說偈曰。",
        "from": "X85n1594_004:0570a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼者念諷偈。",
        "from": "X85n1594_004:0570a07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實非諸佛意。",
        "from": "X85n1594_004:0570a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今遇歡喜尊。",
        "from": "X85n1594_004:0570a08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而可依了之。",
        "from": "X85n1594_004:0570a08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼師弟子竦敬。",
        "from": "X85n1594_004:0570a08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋得二果。",
        "from": "X85n1594_004:0570a08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後阿闍世王白言。",
        "from": "X85n1594_004:0570a09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來迦葉尊勝二師。",
        "from": "X85n1594_004:0570a09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆已涅槃。",
        "from": "X85n1594_004:0570a09_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我多故。",
        "from": "X85n1594_004:0570a10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉不能覩。",
        "from": "X85n1594_004:0570a10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者般涅槃時。",
        "from": "X85n1594_004:0570a10_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂告別。",
        "from": "X85n1594_004:0570a10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難許之。",
        "from": "X85n1594_004:0570a10_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後自念言。",
        "from": "X85n1594_004:0570a11_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我身危脆。",
        "from": "X85n1594_004:0570a11_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如聚沫。",
        "from": "X85n1594_004:0570a11_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復衰老。",
        "from": "X85n1594_004:0570a11_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈堪長久。",
        "from": "X85n1594_004:0570a11_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又念。",
        "from": "X85n1594_004:0570a12_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世王與吾有約。",
        "from": "X85n1594_004:0570a12_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃詣王宮。",
        "from": "X85n1594_004:0570a12_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告之曰。",
        "from": "X85n1594_004:0570a12_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾欲入涅槃。",
        "from": "X85n1594_004:0570a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故來辭耳。",
        "from": "X85n1594_004:0570a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門者曰。",
        "from": "X85n1594_004:0570a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王寢不可以聞。",
        "from": "X85n1594_004:0570a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難曰。",
        "from": "X85n1594_004:0570a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俟王覺時。",
        "from": "X85n1594_004:0570a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為我說。",
        "from": "X85n1594_004:0570a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王夢中。",
        "from": "X85n1594_004:0570a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一寶蓋。",
        "from": "X85n1594_004:0570a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶嚴飾。",
        "from": "X85n1594_004:0570a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千萬億眾。",
        "from": "X85n1594_004:0570a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圍繞瞻仰。",
        "from": "X85n1594_004:0570a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄而風雨暴至。",
        "from": "X85n1594_004:0570a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吹折其柄。",
        "from": "X85n1594_004:0570a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珍寶瓔珞。",
        "from": "X85n1594_004:0570a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉墜於地。",
        "from": "X85n1594_004:0570a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心甚驚異。",
        "from": "X85n1594_004:0570a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既寤。",
        "from": "X85n1594_004:0570a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門者具白上事。",
        "from": "X85n1594_004:0570a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王聞語已。",
        "from": "X85n1594_004:0570a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失聲號慟。",
        "from": "X85n1594_004:0570a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀感天地。",
        "from": "X85n1594_004:0570a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即至毗舍離城。",
        "from": "X85n1594_004:0570a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見阿難在恒河中流。",
        "from": "X85n1594_004:0570a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跏趺而坐。",
        "from": "X85n1594_004:0570a18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王乃作禮。",
        "from": "X85n1594_004:0570a18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "X85n1594_004:0570a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首三界尊。",
        "from": "X85n1594_004:0570a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄我而至此。",
        "from": "X85n1594_004:0570a19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫憑悲願力。",
        "from": "X85n1594_004:0570a19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且莫般涅槃。",
        "from": "X85n1594_004:0570a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時毗舍離王亦在河側。",
        "from": "X85n1594_004:0570a19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說偈言。",
        "from": "X85n1594_004:0570a20_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者一何速。",
        "from": "X85n1594_004:0570a20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而歸寂滅場。",
        "from": "X85n1594_004:0570a20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願住須臾間。",
        "from": "X85n1594_004:0570a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而受於供養。",
        "from": "X85n1594_004:0570a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時阿難見二國王咸來勸請。",
        "from": "X85n1594_004:0570a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃說偈言。",
        "from": "X85n1594_004:0570a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二王善嚴住。",
        "from": "X85n1594_004:0570a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿為苦悲戀。",
        "from": "X85n1594_004:0570a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃當我淨。",
        "from": "X85n1594_004:0570a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無諸有故。",
        "from": "X85n1594_004:0570a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復念。",
        "from": "X85n1594_004:0570a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若向一國而般涅槃。",
        "from": "X85n1594_004:0570a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸國爭競。",
        "from": "X85n1594_004:0570a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有是處。",
        "from": "X85n1594_004:0570a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以平等度諸有情。",
        "from": "X85n1594_004:0570a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂於恒河中流。",
        "from": "X85n1594_004:0570a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將入寂滅。",
        "from": "X85n1594_004:0570a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時山河大地。",
        "from": "X85n1594_004:0570b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六種震動。",
        "from": "X85n1594_004:0570b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪山中有五百仙人。",
        "from": "X85n1594_004:0570b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩茲瑞應。",
        "from": "X85n1594_004:0570b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛空而至。",
        "from": "X85n1594_004:0570b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮阿難足。",
        "from": "X85n1594_004:0570b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡跪白言。",
        "from": "X85n1594_004:0570b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當於長老而證佛法。",
        "from": "X85n1594_004:0570b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂大慈。",
        "from": "X85n1594_004:0570b03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度脫我等。",
        "from": "X85n1594_004:0570b03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難默然受請。",
        "from": "X85n1594_004:0570b03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即變殑伽河。",
        "from": "X85n1594_004:0570b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉為金地。",
        "from": "X85n1594_004:0570b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為其仙眾。",
        "from": "X85n1594_004:0570b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說諸大法。",
        "from": "X85n1594_004:0570b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復念先所度脫弟子。",
        "from": "X85n1594_004:0570b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當來集。",
        "from": "X85n1594_004:0570b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾五百羅漢。",
        "from": "X85n1594_004:0570b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從空而下。",
        "from": "X85n1594_004:0570b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸仙人。",
        "from": "X85n1594_004:0570b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家受具。",
        "from": "X85n1594_004:0570b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其仙眾中。",
        "from": "X85n1594_004:0570b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二羅漢。",
        "from": "X85n1594_004:0570b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名商那和修。",
        "from": "X85n1594_004:0570b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二名末田底迦。",
        "from": "X85n1594_004:0570b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難知是法器。",
        "from": "X85n1594_004:0570b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃告之曰。",
        "from": "X85n1594_004:0570b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來以正法眼。",
        "from": "X85n1594_004:0570b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付大迦葉。",
        "from": "X85n1594_004:0570b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉入定而付於我。",
        "from": "X85n1594_004:0570b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今將滅。",
        "from": "X85n1594_004:0570b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復付於汝。",
        "from": "X85n1594_004:0570b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝受吾教。",
        "from": "X85n1594_004:0570b09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當聽偈言。",
        "from": "X85n1594_004:0570b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來付有法。",
        "from": "X85n1594_004:0570b09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付了言無法。",
        "from": "X85n1594_004:0570b09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各須自悟。",
        "from": "X85n1594_004:0570b10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟了無無法。",
        "from": "X85n1594_004:0570b10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說偈已。",
        "from": "X85n1594_004:0570b10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以正法眼。",
        "from": "X85n1594_004:0570b10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑累商那和修。",
        "from": "X85n1594_004:0570b10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而謂末田底迦曰。",
        "from": "X85n1594_004:0570b11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔佛記云。",
        "from": "X85n1594_004:0570b11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛滅度後。",
        "from": "X85n1594_004:0570b11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後五百歲中。",
        "from": "X85n1594_004:0570b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當於罽賓國。",
        "from": "X85n1594_004:0570b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敷宣大法。",
        "from": "X85n1594_004:0570b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言已。",
        "from": "X85n1594_004:0570b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踊身虗空。",
        "from": "X85n1594_004:0570b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現十八變。",
        "from": "X85n1594_004:0570b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入風輪奮迅三昧。",
        "from": "X85n1594_004:0570b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而分身四分。",
        "from": "X85n1594_004:0570b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一分惠忉利天。",
        "from": "X85n1594_004:0570b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一分惠娑竭羅龍宮。",
        "from": "X85n1594_004:0570b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一分惠阿闍世王。",
        "from": "X85n1594_004:0570b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一分惠毗舍離王。",
        "from": "X85n1594_004:0570b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各造寶塔而供養之。",
        "from": "X85n1594_004:0570b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土周厲王十二年癸巳也。",
        "from": "X85n1594_004:0570b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第四",
        "from": "X85n1594_004:0570b18_0",
        "context_with_next_sentence": false
    }
]