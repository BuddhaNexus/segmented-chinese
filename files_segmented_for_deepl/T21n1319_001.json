[
    {
        "source_sentence": "瑜伽集要熖口施食起教阿難陀",
        "from": "T21n1319_001:0472b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣由",
        "from": "T21n1319_001:0472b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏沙門不空奉　詔譯",
        "from": "T21n1319_001:0472b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T21n1319_001:0472b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在迦毘羅城尼俱律那僧伽藍所。",
        "from": "T21n1319_001:0472b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸比丘并諸菩薩無數眾會。",
        "from": "T21n1319_001:0472b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後圍遶而為說法。",
        "from": "T21n1319_001:0472b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時阿難獨居靜處念所受法。",
        "from": "T21n1319_001:0472b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於其夜三更已後。",
        "from": "T21n1319_001:0472b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一餓鬼名曰焰口。",
        "from": "T21n1319_001:0472b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其形醜陋身體枯瘦。",
        "from": "T21n1319_001:0472b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口中火然咽如針鋒。",
        "from": "T21n1319_001:0472b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭髮髼亂牙爪長利甚可怖畏。",
        "from": "T21n1319_001:0472b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住阿難前白阿難言。",
        "from": "T21n1319_001:0472b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝却後三日命將欲盡。",
        "from": "T21n1319_001:0472b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便生於餓鬼之中。",
        "from": "T21n1319_001:0472c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時阿難聞此語已。",
        "from": "T21n1319_001:0472c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生惶怖問餓鬼言。",
        "from": "T21n1319_001:0472c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士若我死後生餓鬼者。",
        "from": "T21n1319_001:0472c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今行何方便得免斯苦。",
        "from": "T21n1319_001:0472c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時餓鬼白阿難言。",
        "from": "T21n1319_001:0472c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於來日晨朝。",
        "from": "T21n1319_001:0472c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能布施百千那由他恒河沙數餓鬼飲食。",
        "from": "T21n1319_001:0472c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并餘無量婆羅門仙。",
        "from": "T21n1319_001:0472c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅所司業道冥官。",
        "from": "T21n1319_001:0472c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸鬼神先亡久遠等所食飲食。",
        "from": "T21n1319_001:0472c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如摩伽陀國所用之斛。",
        "from": "T21n1319_001:0472c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各施七七斛飲食。",
        "from": "T21n1319_001:0472c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并為我等供養三寶。",
        "from": "T21n1319_001:0472c08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝得增壽。",
        "from": "T21n1319_001:0472c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我等輩離餓鬼苦得生天上。",
        "from": "T21n1319_001:0472c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難見此焰口餓鬼。",
        "from": "T21n1319_001:0472c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身形羸瘦枯燋極醜。",
        "from": "T21n1319_001:0472c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口中火然其咽如針。",
        "from": "T21n1319_001:0472c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭髮髼亂毛爪長利。",
        "from": "T21n1319_001:0472c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又聞是語。",
        "from": "T21n1319_001:0472c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚大驚怖。",
        "from": "T21n1319_001:0472c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身毛皆竪即至晨朝。",
        "from": "T21n1319_001:0472c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起往詣佛所。",
        "from": "T21n1319_001:0472c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右遶三匝頂禮佛足。",
        "from": "T21n1319_001:0472c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體戰慄而白佛言。",
        "from": "T21n1319_001:0472c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲世尊願救我苦。",
        "from": "T21n1319_001:0472c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T21n1319_001:0472c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昨夜三更經行靜處念所受法。",
        "from": "T21n1319_001:0472c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見焰口鬼而語我言。",
        "from": "T21n1319_001:0472c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝過三日必當命盡生餓鬼中。",
        "from": "T21n1319_001:0472c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我問鬼言。",
        "from": "T21n1319_001:0472c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何令我得免斯苦。",
        "from": "T21n1319_001:0472c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼答言。",
        "from": "T21n1319_001:0472c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝若能施百千那由他恒河沙數無量餓鬼。",
        "from": "T21n1319_001:0472c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門仙閻羅所司業道冥官。",
        "from": "T21n1319_001:0472c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸鬼神侍從眷屬先亡久達。",
        "from": "T21n1319_001:0472c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等普施餓鬼飲食。",
        "from": "T21n1319_001:0472c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝得增壽。",
        "from": "T21n1319_001:0472c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白言世尊。",
        "from": "T21n1319_001:0472c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何能辦無量飲食充足。",
        "from": "T21n1319_001:0472c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難汝今勿怖。",
        "from": "T21n1319_001:0472c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念過去無量劫中。",
        "from": "T21n1319_001:0472c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾作婆羅門時。",
        "from": "T21n1319_001:0472c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於觀世音菩薩摩訶薩邊受得陀羅尼　名曰無量威德自在光明如來陀羅尼法。",
        "from": "T21n1319_001:0472c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T21n1319_001:0472c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝若善能作此陀羅尼法加持七遍。",
        "from": "T21n1319_001:0472c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令一食變成種種甘露飲食。",
        "from": "T21n1319_001:0472c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能充足百千俱胝那由他恒河沙數一切餓鬼。",
        "from": "T21n1319_001:0472c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門仙異類鬼神上妙飲食。",
        "from": "T21n1319_001:0472c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得飽滿。",
        "from": "T21n1319_001:0472c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等眾。",
        "from": "T21n1319_001:0472c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一各得摩伽陀國所用之斛。",
        "from": "T21n1319_001:0472c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此食此水量同法界。",
        "from": "T21n1319_001:0472c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食之無盡。",
        "from": "T21n1319_001:0473a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆獲聖果解脫苦身。",
        "from": "T21n1319_001:0473a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T21n1319_001:0473a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今受持此陀羅尼法。",
        "from": "T21n1319_001:0473a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令汝福德壽命增長。",
        "from": "T21n1319_001:0473a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼生天及生淨土受人天身。",
        "from": "T21n1319_001:0473a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令施主。",
        "from": "T21n1319_001:0473a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉障消災延年益壽。",
        "from": "T21n1319_001:0473a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現招勝福當證菩提。",
        "from": "T21n1319_001:0473a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發廣大心普為有情。",
        "from": "T21n1319_001:0473a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積劫已來多生父母。",
        "from": "T21n1319_001:0473a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "列宿天曹幽司地府焰魔鬼界。",
        "from": "T21n1319_001:0473a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜫微蠢動一切含靈。",
        "from": "T21n1319_001:0473a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普設無遮廣大供養悉來赴會。",
        "from": "T21n1319_001:0473a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承佛威光洗滌身田。",
        "from": "T21n1319_001:0473a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲斯勝利受人天樂。",
        "from": "T21n1319_001:0473a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛般若菩薩金剛天等。",
        "from": "T21n1319_001:0473a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸業道無量聖賢。",
        "from": "T21n1319_001:0473a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無緣慈證我所行。",
        "from": "T21n1319_001:0473a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我等為欲滿足宏誓願故。",
        "from": "T21n1319_001:0473a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲宏護令濟有情無退失故。",
        "from": "T21n1319_001:0473a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為摧諸業令清淨故。",
        "from": "T21n1319_001:0473a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲精進求無上道速成就故。",
        "from": "T21n1319_001:0473a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲拔濟惡道眾生。",
        "from": "T21n1319_001:0473a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永拋苦海登彼岸故。",
        "from": "T21n1319_001:0473a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經所說無邊世界六道四生。",
        "from": "T21n1319_001:0473a13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中所有為於主宰統領上首之者。",
        "from": "T21n1319_001:0473a14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是住不思議解脫菩薩。",
        "from": "T21n1319_001:0473a15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲誓願分形布影示現化身。",
        "from": "T21n1319_001:0473a15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在六道中同類受苦。",
        "from": "T21n1319_001:0473a16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設於方便不被煩惱隨煩惱壞。",
        "from": "T21n1319_001:0473a17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別諸業令發道意。",
        "from": "T21n1319_001:0473a17_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常自克責悔身造作。",
        "from": "T21n1319_001:0473a18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏教化一切眾生為大導師。",
        "from": "T21n1319_001:0473a18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧滅三塗淨諸業道。",
        "from": "T21n1319_001:0473a19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷截愛流不捨行願。",
        "from": "T21n1319_001:0473a19_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處於苦海為善知識。",
        "from": "T21n1319_001:0473a20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成熟利樂一切有情證大涅槃。",
        "from": "T21n1319_001:0473a20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有施主深信大乘渴仰瑜伽。",
        "from": "T21n1319_001:0473a21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願樂見聞陀羅尼藏甘露法門。",
        "from": "T21n1319_001:0473a22_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸有情興拔濟心。",
        "from": "T21n1319_001:0473a22_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慇懃稱讚捨大財寶。",
        "from": "T21n1319_001:0473a23_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三請於師方許壇法。",
        "from": "T21n1319_001:0473a23_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等一如離怨憎想。",
        "from": "T21n1319_001:0473a24_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常行布施無有悔恨。",
        "from": "T21n1319_001:0473a24_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近善友勇猛精進無有怯弱。",
        "from": "T21n1319_001:0473a25_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至求大道稱讚三寶。",
        "from": "T21n1319_001:0473a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撫育生命方便拔濟皆令解脫。",
        "from": "T21n1319_001:0473a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以惡求而養身命。",
        "from": "T21n1319_001:0473a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常自利他。",
        "from": "T21n1319_001:0473a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼善男子是真善友。",
        "from": "T21n1319_001:0473a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行菩薩行普為三塗。",
        "from": "T21n1319_001:0473a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡趣中一切餓鬼。",
        "from": "T21n1319_001:0473a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焰魔王等婆羅門仙。",
        "from": "T21n1319_001:0473a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空諸天釋梵四王。",
        "from": "T21n1319_001:0473a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "列宿天曹龍神八部。",
        "from": "T21n1319_001:0473b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月須彌修羅外道。",
        "from": "T21n1319_001:0473b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六欲魔眾水火風空。",
        "from": "T21n1319_001:0473b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山林窟穴舍宅宮殿伽藍。",
        "from": "T21n1319_001:0473b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地江河流泉浴池。",
        "from": "T21n1319_001:0473b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廟宇吉凶遊行神眾。",
        "from": "T21n1319_001:0473b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抄錄善惡神通無礙。",
        "from": "T21n1319_001:0473b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毛羽飛空水族遊鱗。",
        "from": "T21n1319_001:0473b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "披毛角類蠢動含靈。",
        "from": "T21n1319_001:0473b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曝野遊魂鞭尸苦澁。",
        "from": "T21n1319_001:0473b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多生冤恨相繫未免。",
        "from": "T21n1319_001:0473b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫冤魂負於財命。",
        "from": "T21n1319_001:0473b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡過僧尼未證果者。",
        "from": "T21n1319_001:0473b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多生父母眷屬親戚。",
        "from": "T21n1319_001:0473b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承如來教得出三塗。",
        "from": "T21n1319_001:0473b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量地獄發菩提心。",
        "from": "T21n1319_001:0473b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各願放捨解脫冤結。",
        "from": "T21n1319_001:0473b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遞相讚念如父母想。",
        "from": "T21n1319_001:0473b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到此道場證知護念。",
        "from": "T21n1319_001:0473b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心懷踊躍如優曇花。",
        "from": "T21n1319_001:0473b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚難可值由自造作。",
        "from": "T21n1319_001:0473b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處於人間識情難定。",
        "from": "T21n1319_001:0473b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多隨妄起積為苦源。",
        "from": "T21n1319_001:0473b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未獲聖果旋生過患。",
        "from": "T21n1319_001:0473b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復依王水土住佛慈光常思曩緣猶懷今果。",
        "from": "T21n1319_001:0473b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日夜克責何報如斯。",
        "from": "T21n1319_001:0473b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為眷屬親戚父母。",
        "from": "T21n1319_001:0473b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幾曾翻覆顛倒攀緣。",
        "from": "T21n1319_001:0473b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改形換面豈將辯識。",
        "from": "T21n1319_001:0473b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願今日承斯佛力。",
        "from": "T21n1319_001:0473b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "駕逈飛空到此道場。",
        "from": "T21n1319_001:0473b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈光拂體各隨形類。",
        "from": "T21n1319_001:0473b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺滌塵尤發菩提心。",
        "from": "T21n1319_001:0473b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納斯供養。",
        "from": "T21n1319_001:0473b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T21n1319_001:0473b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲受持施食之法。",
        "from": "T21n1319_001:0473b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須依瑜伽甚深三昧阿闍梨法。",
        "from": "T21n1319_001:0473b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若樂修行者。",
        "from": "T21n1319_001:0473b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應從瑜伽阿闍梨學。",
        "from": "T21n1319_001:0473b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發無上大菩提心受三昧戒。",
        "from": "T21n1319_001:0473b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大曼拏囉得灌頂者。",
        "from": "T21n1319_001:0473b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然許受之。",
        "from": "T21n1319_001:0473b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大毘盧遮那如來五智灌頂。",
        "from": "T21n1319_001:0473b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹阿闍梨位方可傳教也。",
        "from": "T21n1319_001:0473b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不爾者遞不相許。",
        "from": "T21n1319_001:0473b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設爾修行自招殃咎。",
        "from": "T21n1319_001:0473b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成盜法罪終無功效。",
        "from": "T21n1319_001:0473b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受灌頂依於師教。",
        "from": "T21n1319_001:0473b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習瑜伽威儀法式。",
        "from": "T21n1319_001:0473b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能分別了達法相。",
        "from": "T21n1319_001:0473b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名三藏。",
        "from": "T21n1319_001:0473b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨方得傳斯教也。",
        "from": "T21n1319_001:0473b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲作法。",
        "from": "T21n1319_001:0473b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先自護持弟子亦爾。",
        "from": "T21n1319_001:0473b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定知日已。",
        "from": "T21n1319_001:0473b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "選擇淨地精華大舍。",
        "from": "T21n1319_001:0473b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閑靜園林鬼神愛樂。",
        "from": "T21n1319_001:0473b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流泉浴池江海山澤。",
        "from": "T21n1319_001:0473b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德之地堂舍亦得。",
        "from": "T21n1319_001:0473b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法塗摩用香水泥。",
        "from": "T21n1319_001:0473b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨施主力方圓大小。",
        "from": "T21n1319_001:0473b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四角竪幖如法莊嚴。",
        "from": "T21n1319_001:0473b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用五色綵安火焰珠。",
        "from": "T21n1319_001:0473c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於珠內安置佛頂大悲隨求尊勝。",
        "from": "T21n1319_001:0473c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東北佛頂。",
        "from": "T21n1319_001:0473c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東南大悲。",
        "from": "T21n1319_001:0473c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西南隨求。",
        "from": "T21n1319_001:0473c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西北尊勝。",
        "from": "T21n1319_001:0473c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於四柱如法莊嚴。",
        "from": "T21n1319_001:0473c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊特妙好名吉祥幢。",
        "from": "T21n1319_001:0473c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令百由旬無諸衰患。",
        "from": "T21n1319_001:0473c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成結界。",
        "from": "T21n1319_001:0473c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風吹影拂土撒水霑。",
        "from": "T21n1319_001:0473c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪障消亡獲大福利。",
        "from": "T21n1319_001:0473c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼見耳聞普皆利濟。",
        "from": "T21n1319_001:0473c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復周圍懸繒幡蓋。",
        "from": "T21n1319_001:0473c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶扇白拂布列位次。",
        "from": "T21n1319_001:0473c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿伽香水妙花燈塗。",
        "from": "T21n1319_001:0473c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食湯藥種種果味及餘物等。",
        "from": "T21n1319_001:0473c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法淨除勿令觸穢。",
        "from": "T21n1319_001:0473c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴若了手執香爐。",
        "from": "T21n1319_001:0473c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右遶道場遍以觀照。",
        "from": "T21n1319_001:0473c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不周備處重要安排。",
        "from": "T21n1319_001:0473c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴事畢與諸弟子。",
        "from": "T21n1319_001:0473c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香湯洗浴著新淨衣。",
        "from": "T21n1319_001:0473c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出外中庭如法洒掃。",
        "from": "T21n1319_001:0473c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香泥塗地如法莊嚴。",
        "from": "T21n1319_001:0473c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名三昧耶壇。",
        "from": "T21n1319_001:0473c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於道場外敷淨薦褥嚴整威儀。",
        "from": "T21n1319_001:0473c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮三拜面東胡跪。",
        "from": "T21n1319_001:0473c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執香爐作啟請法。",
        "from": "T21n1319_001:0473c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽集要焰口施食起教阿難陀緣由竟",
        "from": "T21n1319_001:0473c15_0",
        "context_with_next_sentence": false
    }
]