[
    {
        "source_sentence": "和菩薩戒文一本",
        "from": "T85n2851_001:1300b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涼心渴仰專注法音。",
        "from": "T85n2851_001:1300b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願戒師廣垂湖演和云。",
        "from": "T85n2851_001:1300b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫殺生。",
        "from": "T85n2851_001:1300b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生必當墮大抗。",
        "from": "T85n2851_001:1300b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺命來生短命報。",
        "from": "T85n2851_001:1300b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑婆兩目傷雙盲。",
        "from": "T85n2851_001:1300b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請道場諸眾等共斷殺業不須行。",
        "from": "T85n2851_001:1300b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子諸菩薩莫偷盜得物。",
        "from": "T85n2851_001:1300b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶孃少死後即作畜生身被毛載角來相報。",
        "from": "T85n2851_001:1300b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日驅牽不停息。",
        "from": "T85n2851_001:1300b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有功夫食水草。",
        "from": "T85n2851_001:1300b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶□迷心不覺知。",
        "from": "T85n2851_001:1300b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故慇懃重報。",
        "from": "T85n2851_001:1300b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫邪婬。",
        "from": "T85n2851_001:1300b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪婬顛倒罪根涼鐵床會會來相向。",
        "from": "T85n2851_001:1300b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鋸柱赫赫競來假[白/本]身遍體體皆沾　爛曰。",
        "from": "T85n2851_001:1300b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不發菩提心。",
        "from": "T85n2851_001:1300b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫妄語。",
        "from": "T85n2851_001:1300b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□來誰趣不見言見。",
        "from": "T85n2851_001:1300b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詐虛言鐵犁耕舌。",
        "from": "T85n2851_001:1300b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并解鋸為利見□。",
        "from": "T85n2851_001:1300b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或眾生欺誑師僧及父母。",
        "from": "T85n2851_001:1300b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能懺悔不忍惟當來必離波吒苦。",
        "from": "T85n2851_001:1300b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫估酒。",
        "from": "T85n2851_001:1300b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "估酒洋銅來灌口。",
        "from": "T85n2851_001:1300b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足下火出炎連天。",
        "from": "T85n2851_001:1300b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獄卒持鉾斬兩手。",
        "from": "T85n2851_001:1300b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總為昏癡顛倒。",
        "from": "T85n2851_001:1300b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人身作當身自受。",
        "from": "T85n2851_001:1300b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍被驅掠入阿鼻。",
        "from": "T85n2851_001:1300b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵壁千重無處事。",
        "from": "T85n2851_001:1300b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫自說自說喻。",
        "from": "T85n2851_001:1300b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若湯洗雪造罪。",
        "from": "T85n2851_001:1300b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如一剎那長入波吒而悶絕。",
        "from": "T85n2851_001:1300b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連明曉夜下長釘眼耳之中皆泣。",
        "from": "T85n2851_001:1300b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "血罪因罪果罪根涼。",
        "from": "T85n2851_001:1300b25_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃被牛頭來拔舌不容乞命。",
        "from": "T85n2851_001:1300b25_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫而疎獄卒持秉而使泄。",
        "from": "T85n2851_001:1300b26_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300b26_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫毀他。",
        "from": "T85n2851_001:1300b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀他相將入奈。",
        "from": "T85n2851_001:1300b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀劍毀橫役渡趣。",
        "from": "T85n2851_001:1300b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獄入泥水便[月*養]被混鈍猶如鑊沸。",
        "from": "T85n2851_001:1300b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切地獄盡經過。",
        "from": "T85n2851_001:1300b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皮膚血肉如流水。",
        "from": "T85n2851_001:1300b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何時得離波吒。",
        "from": "T85n2851_001:1300b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫多慳。",
        "from": "T85n2851_001:1300c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多積寶□。",
        "from": "T85n2851_001:1300c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍山見有貧窮來乞者。",
        "from": "T85n2851_001:1300c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一針一草不能制貪心。",
        "from": "T85n2851_001:1300c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不識知厭足。",
        "from": "T85n2851_001:1300c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來空手入黃泉。",
        "from": "T85n2851_001:1300c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫多嗔。",
        "from": "T85n2851_001:1300c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多嗔定受奔蛇。",
        "from": "T85n2851_001:1300c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身婉轉腸行無手足。",
        "from": "T85n2851_001:1300c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為□前世忿怒曰。",
        "from": "T85n2851_001:1300c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬筒□來唼食。",
        "from": "T85n2851_001:1300c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺留自骨乃皮□。",
        "from": "T85n2851_001:1300c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□所□苦難堪忍。",
        "from": "T85n2851_001:1300c06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何時劫得勝人身。",
        "from": "T85n2851_001:1300c06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300c06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩莫謗三寶。",
        "from": "T85n2851_001:1300c07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若謗三寶墮惡道。",
        "from": "T85n2851_001:1300c07_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三百貝長釘定釘處。",
        "from": "T85n2851_001:1300c07_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□叫喚連天聲浩浩謗佛。",
        "from": "T85n2851_001:1300c08_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謗更□嗔銅開鐵櫸來相悖痛哉苦哉。",
        "from": "T85n2851_001:1300c08_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可論何時值遇天掌道。",
        "from": "T85n2851_001:1300c09_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "T85n2851_001:1300c10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微塵至犯黑極千生。",
        "from": "T85n2851_001:1300c10_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝果菩提斯皆頓失。",
        "from": "T85n2851_001:1300c11_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玩嬰六道良亦可悲。",
        "from": "T85n2851_001:1300c11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天上人間取生何路。",
        "from": "T85n2851_001:1300c12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯戒知報已落三途。",
        "from": "T85n2851_001:1300c12_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未番於中所經幾歲。",
        "from": "T85n2851_001:1300c13_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c13_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮惡道中已至極苦。",
        "from": "T85n2851_001:1300c13_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更經劫數誠可痛。",
        "from": "T85n2851_001:1300c14_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心歲月疑長不知。",
        "from": "T85n2851_001:1300c14_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞父母三寶名字已否。",
        "from": "T85n2851_001:1300c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦哉苦哉。",
        "from": "T85n2851_001:1300c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮花藏戒今日得聞。",
        "from": "T85n2851_001:1300c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾共傾心願垂廣說。",
        "from": "T85n2851_001:1300c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今懺悔不敢覆藏。",
        "from": "T85n2851_001:1300c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願戒戒師慈悲廣說。",
        "from": "T85n2851_001:1300c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師密藏甘露真詮。",
        "from": "T85n2851_001:1300c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜慶今聞願垂廣說。",
        "from": "T85n2851_001:1300c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來心地曠劫障聞。",
        "from": "T85n2851_001:1300c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今遇宣揚願垂廣說。",
        "from": "T85n2851_001:1300c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和云。",
        "from": "T85n2851_001:1300c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒沙戒品希遇宣揚。",
        "from": "T85n2851_001:1300c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願惟願戒師慈悲廣說　涼心慚愧不敢覆藏。",
        "from": "T85n2851_001:1300c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露膽披肝發露懺悔。",
        "from": "T85n2851_001:1300c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曠大劫來恒沙罪障。",
        "from": "T85n2851_001:1300c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今聞此戒並得消除。",
        "from": "T85n2851_001:1300c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慚愧戒師布施歡喜。",
        "from": "T85n2851_001:1300c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾符肆年四月　報恩寺寫記",
        "from": "T85n2851_001:1300c24_0",
        "context_with_next_sentence": false
    }
]