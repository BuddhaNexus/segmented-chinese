[
    {
        "source_sentence": "永嘉證道歌",
        "from": "T48n2014_001:0395c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐慎水沙門玄覺撰",
        "from": "T48n2014_001:0395c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君不見。",
        "from": "T48n2014_001:0395c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕學無為閒道人。",
        "from": "T48n2014_001:0395c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不除妄想不求真。",
        "from": "T48n2014_001:0395c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明實性即佛性。",
        "from": "T48n2014_001:0395c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻化空身即法身。",
        "from": "T48n2014_001:0395c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身覺了無一物。",
        "from": "T48n2014_001:0395c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本源自性天真佛。",
        "from": "T48n2014_001:0395c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五陰浮雲空去來。",
        "from": "T48n2014_001:0395c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三毒水泡虛出沒。",
        "from": "T48n2014_001:0395c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證實相無人法。",
        "from": "T48n2014_001:0395c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那滅却阿鼻業。",
        "from": "T48n2014_001:0395c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若將妄語誑眾生。",
        "from": "T48n2014_001:0395c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自招拔舌塵沙劫。",
        "from": "T48n2014_001:0395c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓覺了如來禪。",
        "from": "T48n2014_001:0395c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六度萬行體中圓。",
        "from": "T48n2014_001:0395c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢裏明明有六趣。",
        "from": "T48n2014_001:0395c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺後空空無大千。",
        "from": "T48n2014_001:0395c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無罪福無損益。",
        "from": "T48n2014_001:0395c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂滅性中莫問覓。",
        "from": "T48n2014_001:0395c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比來塵鏡未曾磨。",
        "from": "T48n2014_001:0395c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日分明須剖析。",
        "from": "T48n2014_001:0395c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰無念誰無生。",
        "from": "T48n2014_001:0395c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若實無生無不生。",
        "from": "T48n2014_001:0395c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喚取機關木人問。",
        "from": "T48n2014_001:0395c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求佛施功早晚成。",
        "from": "T48n2014_001:0395c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放四大莫把捉。",
        "from": "T48n2014_001:0395c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂滅性中隨飲啄。",
        "from": "T48n2014_001:0395c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸行無常一切空。",
        "from": "T48n2014_001:0395c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是如來大圓覺。",
        "from": "T48n2014_001:0395c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定說表真僧。",
        "from": "T48n2014_001:0395c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人不肯任情徵。",
        "from": "T48n2014_001:0395c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直截根源佛所印。",
        "from": "T48n2014_001:0395c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摘葉尋枝我不能。",
        "from": "T48n2014_001:0395c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼珠人不識。",
        "from": "T48n2014_001:0395c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來藏裏親收得。",
        "from": "T48n2014_001:0395c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六般神用空不空。",
        "from": "T48n2014_001:0395c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一顆圓光色非色。",
        "from": "T48n2014_001:0395c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨五眼得五力。",
        "from": "T48n2014_001:0395c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯證乃知難可測。",
        "from": "T48n2014_001:0395c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏡裏看形見不難。",
        "from": "T48n2014_001:0395c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水中捉月爭拈得。",
        "from": "T48n2014_001:0395c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常獨行常獨步。",
        "from": "T48n2014_001:0395c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達者同遊涅槃路。",
        "from": "T48n2014_001:0395c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調古神清風自高。",
        "from": "T48n2014_001:0395c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貌顇骨剛人不顧。",
        "from": "T48n2014_001:0395c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮釋子口稱貧。",
        "from": "T48n2014_001:0395c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實是身貧道不貧。",
        "from": "T48n2014_001:0395c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧則身常披縷褐。",
        "from": "T48n2014_001:0395c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道則心藏無價珍。",
        "from": "T48n2014_001:0395c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無價珍用無盡。",
        "from": "T48n2014_001:0395c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利物應機終不悋。",
        "from": "T48n2014_001:0395c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三身四智體中圓。",
        "from": "T48n2014_001:0395c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八解六通心地印。",
        "from": "T48n2014_001:0395c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上士一決一切了。",
        "from": "T48n2014_001:0396a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中下多聞多不信。",
        "from": "T48n2014_001:0396a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但自懷中解垢衣。",
        "from": "T48n2014_001:0396a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰能向外誇精進。",
        "from": "T48n2014_001:0396a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從他謗任他非。",
        "from": "T48n2014_001:0396a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "把火燒天徒自疲。",
        "from": "T48n2014_001:0396a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我聞恰似飲甘露。",
        "from": "T48n2014_001:0396a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銷融頓入不思議。",
        "from": "T48n2014_001:0396a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀惡言是功德。",
        "from": "T48n2014_001:0396a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即成吾善知識。",
        "from": "T48n2014_001:0396a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不因訕謗起冤親。",
        "from": "T48n2014_001:0396a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何表無生慈忍力。",
        "from": "T48n2014_001:0396a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗亦通說亦通。",
        "from": "T48n2014_001:0396a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧圓明不滯空。",
        "from": "T48n2014_001:0396a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非但我今獨達了。",
        "from": "T48n2014_001:0396a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒沙諸佛體皆同。",
        "from": "T48n2014_001:0396a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼無畏說。",
        "from": "T48n2014_001:0396a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百獸聞之皆腦裂。",
        "from": "T48n2014_001:0396a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香象奔波失却威。",
        "from": "T48n2014_001:0396a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍寂聽生欣悅。",
        "from": "T48n2014_001:0396a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊江海涉山川。",
        "from": "T48n2014_001:0396a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋師訪道為參禪。",
        "from": "T48n2014_001:0396a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自從認得曹谿路。",
        "from": "T48n2014_001:0396a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知生死不相關。",
        "from": "T48n2014_001:0396a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行亦禪坐亦禪。",
        "from": "T48n2014_001:0396a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語默動靜體安然。",
        "from": "T48n2014_001:0396a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱遇鋒刀常坦坦。",
        "from": "T48n2014_001:0396a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假饒毒藥也閒閒。",
        "from": "T48n2014_001:0396a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我師得見然燈佛。",
        "from": "T48n2014_001:0396a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多劫曾為忍辱仙。",
        "from": "T48n2014_001:0396a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幾迴生幾迴死。",
        "from": "T48n2014_001:0396a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死悠悠無定止。",
        "from": "T48n2014_001:0396a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自從頓悟了無生。",
        "from": "T48n2014_001:0396a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸榮辱何憂喜。",
        "from": "T48n2014_001:0396a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入深山住蘭若。",
        "from": "T48n2014_001:0396a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岑崟幽邃長松下。",
        "from": "T48n2014_001:0396a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優游靜坐野僧家。",
        "from": "T48n2014_001:0396a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閴寂安居實蕭灑。",
        "from": "T48n2014_001:0396a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺即了不施功。",
        "from": "T48n2014_001:0396a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有為法不同。",
        "from": "T48n2014_001:0396a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住相布施生天福。",
        "from": "T48n2014_001:0396a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如仰箭射虛空。",
        "from": "T48n2014_001:0396a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢力盡箭還墜。",
        "from": "T48n2014_001:0396a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "招得來生不如意。",
        "from": "T48n2014_001:0396a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爭似無為實相門。",
        "from": "T48n2014_001:0396a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一超直入如來地。",
        "from": "T48n2014_001:0396a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但得本莫愁末。",
        "from": "T48n2014_001:0396a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如淨瑠璃含寶月。",
        "from": "T48n2014_001:0396a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既能解此如意珠。",
        "from": "T48n2014_001:0396a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自利利他終不竭。",
        "from": "T48n2014_001:0396a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江月照松風吹。",
        "from": "T48n2014_001:0396a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永夜清宵何所為。",
        "from": "T48n2014_001:0396a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性戒珠心地印。",
        "from": "T48n2014_001:0396a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霧露雲霞體上衣。",
        "from": "T48n2014_001:0396a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降龍鉢解虎錫。",
        "from": "T48n2014_001:0396a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩鈷金環鳴歷歷。",
        "from": "T48n2014_001:0396a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是標形虛事持。",
        "from": "T48n2014_001:0396a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來寶杖親蹤跡。",
        "from": "T48n2014_001:0396a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求真不斷妄。",
        "from": "T48n2014_001:0396a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知二法空無相。",
        "from": "T48n2014_001:0396a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相無空無不空。",
        "from": "T48n2014_001:0396a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是如來真實相。",
        "from": "T48n2014_001:0396a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心鏡明鑒無礙。",
        "from": "T48n2014_001:0396a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓然瑩徹周沙界。",
        "from": "T48n2014_001:0396a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬象森羅影現中。",
        "from": "T48n2014_001:0396a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一顆圓光非內外。",
        "from": "T48n2014_001:0396a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁達空撥因果。",
        "from": "T48n2014_001:0396a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莽莽蕩蕩招殃禍。",
        "from": "T48n2014_001:0396a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄有著空病亦然。",
        "from": "T48n2014_001:0396a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還如避溺而投火。",
        "from": "T48n2014_001:0396a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨妄心取真理。",
        "from": "T48n2014_001:0396a28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取捨之心成巧偽。",
        "from": "T48n2014_001:0396a29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學人不了用修行。",
        "from": "T48n2014_001:0396a29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深成認賊將為子。",
        "from": "T48n2014_001:0396b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "損法財滅功德。",
        "from": "T48n2014_001:0396b01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不由斯心意識。",
        "from": "T48n2014_001:0396b01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以禪門了却心。",
        "from": "T48n2014_001:0396b02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓入無生知見力。",
        "from": "T48n2014_001:0396b02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大丈夫秉慧劍。",
        "from": "T48n2014_001:0396b03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若鋒兮金剛焰。",
        "from": "T48n2014_001:0396b03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非但空摧外道心。",
        "from": "T48n2014_001:0396b03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "早曾落却天魔膽。",
        "from": "T48n2014_001:0396b04_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震法靁擊法鼓。",
        "from": "T48n2014_001:0396b04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布慈雲兮灑甘露。",
        "from": "T48n2014_001:0396b05_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍象蹴踏潤無邊。",
        "from": "T48n2014_001:0396b05_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三乘五性皆醒悟。",
        "from": "T48n2014_001:0396b05_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪山肥膩更無雜。",
        "from": "T48n2014_001:0396b06_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純出醍醐我常納。",
        "from": "T48n2014_001:0396b06_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一性圓通一切性。",
        "from": "T48n2014_001:0396b07_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法遍含一切法。",
        "from": "T48n2014_001:0396b07_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一月普現一切水。",
        "from": "T48n2014_001:0396b07_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切水月一月攝。",
        "from": "T48n2014_001:0396b08_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛法身入我性。",
        "from": "T48n2014_001:0396b08_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我性同共如來合。",
        "from": "T48n2014_001:0396b09_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一地具足一切地。",
        "from": "T48n2014_001:0396b09_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色非心非行業。",
        "from": "T48n2014_001:0396b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指圓成八萬門。",
        "from": "T48n2014_001:0396b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那滅却三祇劫。",
        "from": "T48n2014_001:0396b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切數句非數句。",
        "from": "T48n2014_001:0396b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與吾靈覺何交涉。",
        "from": "T48n2014_001:0396b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可毀不可讚。",
        "from": "T48n2014_001:0396b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體若虛空勿涯岸。",
        "from": "T48n2014_001:0396b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離當處常湛然。",
        "from": "T48n2014_001:0396b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覓即知君不可見。",
        "from": "T48n2014_001:0396b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取不得捨不得。",
        "from": "T48n2014_001:0396b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得中只麼得。",
        "from": "T48n2014_001:0396b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默時說說時默。",
        "from": "T48n2014_001:0396b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大施門開無壅塞。",
        "from": "T48n2014_001:0396b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人問我解何宗。",
        "from": "T48n2014_001:0396b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報道摩訶般若力。",
        "from": "T48n2014_001:0396b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或是或非人不識。",
        "from": "T48n2014_001:0396b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逆行順行天莫測。",
        "from": "T48n2014_001:0396b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾早曾經多劫修。",
        "from": "T48n2014_001:0396b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是等閒相誑惑。",
        "from": "T48n2014_001:0396b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建法幢立宗旨。",
        "from": "T48n2014_001:0396b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明明佛勅曹溪是。",
        "from": "T48n2014_001:0396b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一迦葉首傳燈。",
        "from": "T48n2014_001:0396b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八代西天記。",
        "from": "T48n2014_001:0396b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法東流入此土。",
        "from": "T48n2014_001:0396b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提達磨為初祖。",
        "from": "T48n2014_001:0396b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六代傳衣天下聞。",
        "from": "T48n2014_001:0396b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後人得道何窮數。",
        "from": "T48n2014_001:0396b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真不立妄本空。",
        "from": "T48n2014_001:0396b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無俱遣不空空。",
        "from": "T48n2014_001:0396b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十空門元不著。",
        "from": "T48n2014_001:0396b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一性如來體自同。",
        "from": "T48n2014_001:0396b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心是根法是塵。",
        "from": "T48n2014_001:0396b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩種猶如鏡上痕。",
        "from": "T48n2014_001:0396b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痕垢盡除光始現。",
        "from": "T48n2014_001:0396b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心法雙忘性即真。",
        "from": "T48n2014_001:0396b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗟末法惡時世。",
        "from": "T48n2014_001:0396b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生福薄難調制。",
        "from": "T48n2014_001:0396b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去聖遠兮邪見深。",
        "from": "T48n2014_001:0396b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔強法弱多恐害。",
        "from": "T48n2014_001:0396b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞說如來頓教門。",
        "from": "T48n2014_001:0396b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恨不滅除令瓦碎。",
        "from": "T48n2014_001:0396b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作在心殃在身。",
        "from": "T48n2014_001:0396b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須冤訴更尤人。",
        "from": "T48n2014_001:0396b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得不招無間業。",
        "from": "T48n2014_001:0396b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫謗如來正法輪。",
        "from": "T48n2014_001:0396b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旃檀林無雜樹。",
        "from": "T48n2014_001:0396b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欝密森沈師子住。",
        "from": "T48n2014_001:0396b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境靜林間獨自遊。",
        "from": "T48n2014_001:0396b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "走獸飛禽皆遠去。",
        "from": "T48n2014_001:0396b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子兒眾隨後。",
        "from": "T48n2014_001:0396b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三歲便能大哮吼。",
        "from": "T48n2014_001:0396b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是野干逐法王。",
        "from": "T48n2014_001:0396c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百年妖怪虛開口。",
        "from": "T48n2014_001:0396c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓頓教勿人情。",
        "from": "T48n2014_001:0396c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有疑不決直須爭。",
        "from": "T48n2014_001:0396c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是山僧逞人我。",
        "from": "T48n2014_001:0396c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行恐落斷常坑。",
        "from": "T48n2014_001:0396c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非不非是不是。",
        "from": "T48n2014_001:0396c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "差之毫釐失千里。",
        "from": "T48n2014_001:0396c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則龍女頓成佛。",
        "from": "T48n2014_001:0396c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非則善星生陷墜。",
        "from": "T48n2014_001:0396c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾早年來積學問。",
        "from": "T48n2014_001:0396c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦曾討疏尋經論。",
        "from": "T48n2014_001:0396c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別名相不知休。",
        "from": "T48n2014_001:0396c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入海算沙徒自困。",
        "from": "T48n2014_001:0396c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却被如來苦訶責。",
        "from": "T48n2014_001:0396c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數他珍寶有何益。",
        "from": "T48n2014_001:0396c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從來蹭蹬覺虛行。",
        "from": "T48n2014_001:0396c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多年枉作風塵客。",
        "from": "T48n2014_001:0396c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種性邪錯知解。",
        "from": "T48n2014_001:0396c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不達如來圓頓制。",
        "from": "T48n2014_001:0396c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘精進勿道心。",
        "from": "T48n2014_001:0396c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道聰明無智慧。",
        "from": "T48n2014_001:0396c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦愚癡亦小騃。",
        "from": "T48n2014_001:0396c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空拳指上生實解。",
        "from": "T48n2014_001:0396c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執指為月枉施功。",
        "from": "T48n2014_001:0396c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根境法中虛揑怪。",
        "from": "T48n2014_001:0396c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見一法即如來。",
        "from": "T48n2014_001:0396c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方得名為觀自在。",
        "from": "T48n2014_001:0396c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了即業障本來空。",
        "from": "T48n2014_001:0396c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未了應須還夙債。",
        "from": "T48n2014_001:0396c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饑逢王饍不能飡。",
        "from": "T48n2014_001:0396c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病遇醫王爭得瘥。",
        "from": "T48n2014_001:0396c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在欲行禪知見力。",
        "from": "T48n2014_001:0396c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火中生蓮終不壞。",
        "from": "T48n2014_001:0396c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇施犯重悟無生。",
        "from": "T48n2014_001:0396c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "早時成佛于今在。",
        "from": "T48n2014_001:0396c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼無畏說。",
        "from": "T48n2014_001:0396c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深嗟懵懂頑皮靼。",
        "from": "T48n2014_001:0396c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秖知犯重障菩提。",
        "from": "T48n2014_001:0396c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見如來開祕訣。",
        "from": "T48n2014_001:0396c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二比丘犯婬殺。",
        "from": "T48n2014_001:0396c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波離螢光增罪結。",
        "from": "T48n2014_001:0396c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩大士頓除疑。",
        "from": "T48n2014_001:0396c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如赫日銷霜雪。",
        "from": "T48n2014_001:0396c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不思議解脫力。",
        "from": "T48n2014_001:0396c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙用恒沙也無極。",
        "from": "T48n2014_001:0396c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四事供養敢辭勞。",
        "from": "T48n2014_001:0396c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬兩黃金亦銷得。",
        "from": "T48n2014_001:0396c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粉骨碎身未足酬。",
        "from": "T48n2014_001:0396c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句了然超百億。",
        "from": "T48n2014_001:0396c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法中王最高勝。",
        "from": "T48n2014_001:0396c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒沙如來同共證。",
        "from": "T48n2014_001:0396c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今解此如意珠。",
        "from": "T48n2014_001:0396c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受之者皆相應。",
        "from": "T48n2014_001:0396c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了見無一物。",
        "from": "T48n2014_001:0396c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無人亦無佛。",
        "from": "T48n2014_001:0396c23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大千沙界海中漚。",
        "from": "T48n2014_001:0396c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聖賢如電拂。",
        "from": "T48n2014_001:0396c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使鐵輪頂上旋。",
        "from": "T48n2014_001:0396c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧圓明終不失。",
        "from": "T48n2014_001:0396c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日可冷月可熱。",
        "from": "T48n2014_001:0396c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾魔不能壞真說。",
        "from": "T48n2014_001:0396c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象駕崢嶸謾進途。",
        "from": "T48n2014_001:0396c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰見螗蜋能拒轍。",
        "from": "T48n2014_001:0396c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大象不遊於兔徑。",
        "from": "T48n2014_001:0396c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悟不拘於小節。",
        "from": "T48n2014_001:0396c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫將管見謗蒼蒼。",
        "from": "T48n2014_001:0396c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未了吾今為君訣。",
        "from": "T48n2014_001:0396c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉證道歌(終)",
        "from": "T48n2014_001:0396c29_0",
        "context_with_next_sentence": false
    }
]