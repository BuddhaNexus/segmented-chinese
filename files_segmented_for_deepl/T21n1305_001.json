[
    {
        "source_sentence": "北斗七星念誦儀軌",
        "from": "T21n1305_001:0423c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺國三藏金剛智譯",
        "from": "T21n1305_001:0423c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來為末世薄福一切眾生故。",
        "from": "T21n1305_001:0423c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說真言教法。",
        "from": "T21n1305_001:0423c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時一切日月星宿。",
        "from": "T21n1305_001:0423c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉雲集前後圍繞。",
        "from": "T21n1305_001:0423c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異口同音白言。",
        "from": "T21n1305_001:0423c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來而為我等說於神呪。",
        "from": "T21n1305_001:0423c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時世尊說八星呪曰。",
        "from": "T21n1305_001:0423c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　颯　跢　而　曩　野　伴　惹　密　惹　野染　普　他　摩　娑嚩(二合)　弭　曩　囉　乞山(二合)婆　嚩　都　莎　呵其印明出金剛頂經七星品。",
        "from": "T21n1305_001:0424a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告貪狼破軍等言。",
        "from": "T21n1305_001:0424a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1305_001:0424a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持是神呪擁護否。",
        "from": "T21n1305_001:0424a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時八女白世尊言。",
        "from": "T21n1305_001:0424a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人每日誦此神呪。",
        "from": "T21n1305_001:0424a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定罪業皆悉除滅。",
        "from": "T21n1305_001:0424a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切願求。",
        "from": "T21n1305_001:0424a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設復有人。",
        "from": "T21n1305_001:0424a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能每日誦此神呪一百八遍。",
        "from": "T21n1305_001:0424a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得自身及一切眷屬擁護。",
        "from": "T21n1305_001:0424a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能誦五百遍。",
        "from": "T21n1305_001:0424a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大威神力。",
        "from": "T21n1305_001:0424a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百由旬內。",
        "from": "T21n1305_001:0424a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普皆圍繞。",
        "from": "T21n1305_001:0424a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔王及諸魔眾。",
        "from": "T21n1305_001:0424a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切障者無量惡鬼。",
        "from": "T21n1305_001:0424a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢親近。",
        "from": "T21n1305_001:0424a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常當擁護。",
        "from": "T21n1305_001:0424a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北斗八女一切日月星宿諸天龍藥叉。",
        "from": "T21n1305_001:0424a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能作障難者一時斷壞。",
        "from": "T21n1305_001:0424a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲供養者。",
        "from": "T21n1305_001:0424a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先發拔濟心。",
        "from": "T21n1305_001:0424a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清淨寂靜之處。",
        "from": "T21n1305_001:0424a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香華飲食供養。",
        "from": "T21n1305_001:0424a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持念神呪結印契。",
        "from": "T21n1305_001:0424a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是供養時。",
        "from": "T21n1305_001:0424a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八女及一切眷屬。",
        "from": "T21n1305_001:0424a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現身隨意奉仕。",
        "from": "T21n1305_001:0424a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就無量願求。",
        "from": "T21n1305_001:0424a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惹位即得。",
        "from": "T21n1305_001:0424a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況世間少少官位榮耀。",
        "from": "T21n1305_001:0424a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求壽命削定業籍。",
        "from": "T21n1305_001:0424a21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還付生籍。",
        "from": "T21n1305_001:0424a21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸國王王子大臣後宮等。",
        "from": "T21n1305_001:0424a22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自宮中作曼荼羅。",
        "from": "T21n1305_001:0424a22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法護摩禮拜供養。",
        "from": "T21n1305_001:0424a23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北斗八女皆大歡喜。",
        "from": "T21n1305_001:0424a23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故久居勝位恒常受安樂。",
        "from": "T21n1305_001:0424a24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百官上下和穆不行非法。",
        "from": "T21n1305_001:0424a24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人民熾盛稼穡豐饒。",
        "from": "T21n1305_001:0424a25_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土安寧無有災難不現異怪。",
        "from": "T21n1305_001:0424a25_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疫病死亡不起。",
        "from": "T21n1305_001:0424a26_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境內怨敵群賊自然退散。",
        "from": "T21n1305_001:0424a26_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以是法甚為祕密。",
        "from": "T21n1305_001:0424a27_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信者及無智人中勿妄宣傳。",
        "from": "T21n1305_001:0424a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智人不分明心故。",
        "from": "T21n1305_001:0424a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得法意生疑謗。",
        "from": "T21n1305_001:0424a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無智人金剛生金剛子等。",
        "from": "T21n1305_001:0424a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常誦持佛眼母明者當宣傳。",
        "from": "T21n1305_001:0424b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛子雖無智不生疑謗故成就法。",
        "from": "T21n1305_001:0424b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者雖樂世間樂。",
        "from": "T21n1305_001:0424b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深迴向無上正等菩提。",
        "from": "T21n1305_001:0424b03_7",
        "context_with_next_sentence": false
    }
]