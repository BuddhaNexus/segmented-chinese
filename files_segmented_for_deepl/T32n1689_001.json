[
    {
        "source_sentence": "請賓頭盧法",
        "from": "T32n1689_001:0784b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋沙門釋慧簡譯",
        "from": "T32n1689_001:0784b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天竺國有優婆塞國王長者。",
        "from": "T32n1689_001:0784b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若設一切會。",
        "from": "T32n1689_001:0784b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常請賓頭盧頗羅墮誓阿羅漢賓頭盧者字也。",
        "from": "T32n1689_001:0784b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗羅墮誓者姓也。",
        "from": "T32n1689_001:0784b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人為樹提長者現神足故。",
        "from": "T32n1689_001:0784b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛擯之不聽涅槃。",
        "from": "T32n1689_001:0784b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅令為末法四部眾作福田。",
        "from": "T32n1689_001:0784b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請時於靜處燒香禮拜。",
        "from": "T32n1689_001:0784b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向天竺摩梨山。",
        "from": "T32n1689_001:0784b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心稱名言。",
        "from": "T32n1689_001:0784b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大德賓頭盧頗羅墮誓。",
        "from": "T32n1689_001:0784b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受佛教勅。",
        "from": "T32n1689_001:0784b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為末法人作福田。",
        "from": "T32n1689_001:0784b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願受我請。",
        "from": "T32n1689_001:0784b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此處食。",
        "from": "T32n1689_001:0784b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若新作屋舍。",
        "from": "T32n1689_001:0784b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應請之言。",
        "from": "T32n1689_001:0784b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願受我請。",
        "from": "T32n1689_001:0784b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此舍床敷止宿。",
        "from": "T32n1689_001:0784b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若普請眾僧澡浴時。",
        "from": "T32n1689_001:0784b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應請之言。",
        "from": "T32n1689_001:0784b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願受我請。",
        "from": "T32n1689_001:0784b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此洗浴。",
        "from": "T32n1689_001:0784b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及未明前具香湯淨水澡豆楊枝。",
        "from": "T32n1689_001:0784b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香油調和冷暖。",
        "from": "T32n1689_001:0784b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人浴法。",
        "from": "T32n1689_001:0784b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開戶請入。",
        "from": "T32n1689_001:0784b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後閉戶。",
        "from": "T32n1689_001:0784b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人浴訖頃。",
        "from": "T32n1689_001:0784b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾僧乃入。",
        "from": "T32n1689_001:0784b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡會食澡浴。",
        "from": "T32n1689_001:0784b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要須一切請僧至心求解脫。",
        "from": "T32n1689_001:0784b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不疑不昧。",
        "from": "T32n1689_001:0784b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心清淨。",
        "from": "T32n1689_001:0784b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後可屈。",
        "from": "T32n1689_001:0784b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近世有一長者聞說賓頭盧阿羅漢受佛教勅為末法人作福田。",
        "from": "T32n1689_001:0784b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如法施設大會。",
        "from": "T32n1689_001:0784b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心請賓頭盧。",
        "from": "T32n1689_001:0784b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氍氀下遍布華。",
        "from": "T32n1689_001:0784b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以驗之。",
        "from": "T32n1689_001:0784b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾食訖。",
        "from": "T32n1689_001:0784b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發氍氀華皆萎。",
        "from": "T32n1689_001:0784b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懊惱自責。",
        "from": "T32n1689_001:0784b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知過所從來。",
        "from": "T32n1689_001:0784b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更復精竭。",
        "from": "T32n1689_001:0784b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審問經師。",
        "from": "T32n1689_001:0784b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重設大會。",
        "from": "T32n1689_001:0784b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前華亦復皆萎。",
        "from": "T32n1689_001:0784b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復更傾竭盡家財產。",
        "from": "T32n1689_001:0784b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作大會。",
        "from": "T32n1689_001:0784b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶亦如前。",
        "from": "T32n1689_001:0784b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懊惱自責。",
        "from": "T32n1689_001:0784b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更請百餘法師。",
        "from": "T32n1689_001:0784b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求請所失。",
        "from": "T32n1689_001:0784b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺謝罪過。",
        "from": "T32n1689_001:0784b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如向上座一人年老。",
        "from": "T32n1689_001:0784b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四布悔其愆咎。",
        "from": "T32n1689_001:0784b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上座告之。",
        "from": "T32n1689_001:0784b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝三會請我。",
        "from": "T32n1689_001:0784b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆受請。",
        "from": "T32n1689_001:0784b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝自使奴門中見遮。",
        "from": "T32n1689_001:0784b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我年老衣服弊壞。",
        "from": "T32n1689_001:0784c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂是被擯。",
        "from": "T32n1689_001:0784c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賴提沙門不肯見前。",
        "from": "T32n1689_001:0784c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以汝請欲強入。",
        "from": "T32n1689_001:0784c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝奴以杖打我。",
        "from": "T32n1689_001:0784c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭破額右角瘡。",
        "from": "T32n1689_001:0784c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是第二會亦來。",
        "from": "T32n1689_001:0784c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復不見前。",
        "from": "T32n1689_001:0784c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我又欲強入。",
        "from": "T32n1689_001:0784c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復打我頭額中瘡。",
        "from": "T32n1689_001:0784c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是第三會亦來。",
        "from": "T32n1689_001:0784c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前被打。",
        "from": "T32n1689_001:0784c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭額左角瘡。",
        "from": "T32n1689_001:0784c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是皆汝自為之。",
        "from": "T32n1689_001:0784c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何所懊惋。",
        "from": "T32n1689_001:0784c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言已不現。",
        "from": "T32n1689_001:0784c06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者乃知是賓頭盧。",
        "from": "T32n1689_001:0784c06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自爾以來。",
        "from": "T32n1689_001:0784c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸人設福皆不敢復遮門。",
        "from": "T32n1689_001:0784c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得賓頭盧。",
        "from": "T32n1689_001:0784c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其坐華即不萎。",
        "from": "T32n1689_001:0784c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若新立房舍床榻。",
        "from": "T32n1689_001:0784c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲請賓頭盧時。",
        "from": "T32n1689_001:0784c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當香湯灑地。",
        "from": "T32n1689_001:0784c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燃香油燈。",
        "from": "T32n1689_001:0784c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "新床新褥奮綿敷之。",
        "from": "T32n1689_001:0784c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以白練覆綿上。",
        "from": "T32n1689_001:0784c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初夜如法請之。",
        "from": "T32n1689_001:0784c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還閉房戶。",
        "from": "T32n1689_001:0784c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎勿輕慢闚看。",
        "from": "T32n1689_001:0784c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆各至心信其必來。",
        "from": "T32n1689_001:0784c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精誠感徹。",
        "from": "T32n1689_001:0784c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不至也。",
        "from": "T32n1689_001:0784c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來則耨上現有臥處。",
        "from": "T32n1689_001:0784c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴室亦現用湯水處。",
        "from": "T32n1689_001:0784c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大會請時。",
        "from": "T32n1689_001:0784c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在上坐。",
        "from": "T32n1689_001:0784c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在中坐。",
        "from": "T32n1689_001:0784c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在下坐。",
        "from": "T32n1689_001:0784c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現作隨處僧形。",
        "from": "T32n1689_001:0784c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人求其異終不可得。",
        "from": "T32n1689_001:0784c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去後見坐處華不萎乃知之矣。",
        "from": "T32n1689_001:0784c15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請賓頭盧法",
        "from": "T32n1689_001:0784c17_0",
        "context_with_next_sentence": false
    }
]