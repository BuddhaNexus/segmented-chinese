[
    {
        "source_sentence": "佛說楞伽經禪門悉談章(并序)",
        "from": "T85n2779_001:0536a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛子等合掌至心聽。",
        "from": "T85n2779_001:0536a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今欲說大乘楞伽悉談章。",
        "from": "T85n2779_001:0536a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉談章者。",
        "from": "T85n2779_001:0536a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉談昔大乘在楞伽山。",
        "from": "T85n2779_001:0536a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因得菩提達摩和尚。",
        "from": "T85n2779_001:0536a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋家元年從南天竹國。",
        "from": "T85n2779_001:0536a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將楞伽經來至東都。",
        "from": "T85n2779_001:0536a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跋陀三藏法師奉諮翻譯。",
        "from": "T85n2779_001:0536a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其經總有五卷合成一部。",
        "from": "T85n2779_001:0536a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文字浩[泳-永+旱]意義難知。",
        "from": "T85n2779_001:0536a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和上慈悲廣濟郡品。",
        "from": "T85n2779_001:0536a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通經問道識攬懸宗。",
        "from": "T85n2779_001:0536a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮達本原皆蒙指受。",
        "from": "T85n2779_001:0536a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又蒿山會善沙門定慧翻出悉談章。",
        "from": "T85n2779_001:0536a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣開禪門不妨慧學。",
        "from": "T85n2779_001:0536a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著文字並合秦音。",
        "from": "T85n2779_001:0536a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼與鳩摩羅什法師通韻。",
        "from": "T85n2779_001:0536a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魯留盧樓為首。",
        "from": "T85n2779_001:0536a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗邏墮頗邏墮。",
        "from": "T85n2779_001:0536a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一捨緣清淨座。",
        "from": "T85n2779_001:0536a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬事不起真無我。",
        "from": "T85n2779_001:0536a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直進菩提離因果。",
        "from": "T85n2779_001:0536a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心寂滅無殃禍。",
        "from": "T85n2779_001:0536a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念無念當印可。",
        "from": "T85n2779_001:0536a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩底利摩魯留盧樓頗羅墮　諸佛子莫嬾墮自勸課。",
        "from": "T85n2779_001:0536a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛河苦海須度過。",
        "from": "T85n2779_001:0536a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶食不喰常被餓。",
        "from": "T85n2779_001:0536a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木頭不攢不出火。",
        "from": "T85n2779_001:0536a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耶羅邏端坐。",
        "from": "T85n2779_001:0536a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑訶耶莫臥。",
        "from": "T85n2779_001:0536a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只領盛只領盛。",
        "from": "T85n2779_001:0536a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二住心常看淨。",
        "from": "T85n2779_001:0536a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見亦聞無視聽。",
        "from": "T85n2779_001:0536a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅兩亡由未證。",
        "from": "T85n2779_001:0536a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師授語方顯定。",
        "from": "T85n2779_001:0536a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見佛法身無二性。",
        "from": "T85n2779_001:0536a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性頂領徑魯留盧樓只領盛　諸佛子莫瞋侫。",
        "from": "T85n2779_001:0536a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三毒忽起無佛性。",
        "from": "T85n2779_001:0536a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡狂心亂惱賢聖。",
        "from": "T85n2779_001:0536a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼貪色塵耳縛聽。",
        "from": "T85n2779_001:0536a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "背却天堂向惡徑。",
        "from": "T85n2779_001:0536a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盈令今修定。",
        "from": "T85n2779_001:0536a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑訶耶歸正。",
        "from": "T85n2779_001:0536a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗄浪養嗄浪養。",
        "from": "T85n2779_001:0536a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三看心須併儻。",
        "from": "T85n2779_001:0536a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掃却垢穢除災障。",
        "from": "T85n2779_001:0536a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即色即空會無想。",
        "from": "T85n2779_001:0536a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄想分別是心量。",
        "from": "T85n2779_001:0536a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體上識體實無謗。",
        "from": "T85n2779_001:0536a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謗底利謗魯留盧樓嗄浪養　諸佛子莫毀謗。",
        "from": "T85n2779_001:0536a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆有罪業障。",
        "from": "T85n2779_001:0536b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他家聞聲不相放。",
        "from": "T85n2779_001:0536b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三寸舌根作沒向。",
        "from": "T85n2779_001:0536b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道長說短惱心王。",
        "from": "T85n2779_001:0536b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心王不了說短長。",
        "from": "T85n2779_001:0536b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來生業道受苦殃。",
        "from": "T85n2779_001:0536b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羊良良併當淨掃。",
        "from": "T85n2779_001:0536b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堂中頃供養。",
        "from": "T85n2779_001:0536b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拂粟質拂粟質。",
        "from": "T85n2779_001:0536b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四八識合六七。",
        "from": "T85n2779_001:0536b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "看心心本是禪室。",
        "from": "T85n2779_001:0536b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身身法智非一。",
        "from": "T85n2779_001:0536b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五眼六通光慧日。",
        "from": "T85n2779_001:0536b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言下便悟實無密。",
        "from": "T85n2779_001:0536b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密底利密魯留盧樓拂粟質　諸佛子莫放逸。",
        "from": "T85n2779_001:0536b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始已來居暗室。",
        "from": "T85n2779_001:0536b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死流轉不得出。",
        "from": "T85n2779_001:0536b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只為愚迷障慧日。",
        "from": "T85n2779_001:0536b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逸粟密逸粟密娑訶直實。",
        "from": "T85n2779_001:0536b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曉燎曜曉燎曜。",
        "from": "T85n2779_001:0536b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五實相門中照。",
        "from": "T85n2779_001:0536b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切名利妄呼召。",
        "from": "T85n2779_001:0536b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如已等息貌非貌。",
        "from": "T85n2779_001:0536b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非因非果無嗔笑。",
        "from": "T85n2779_001:0536b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性上看性妙中妙。",
        "from": "T85n2779_001:0536b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要底裏要魯留盧樓曉撩曜　諸佛子莫瞋笑。",
        "from": "T85n2779_001:0536b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂悲瞋笑是障道。",
        "from": "T85n2779_001:0536b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此道門無瞋笑。",
        "from": "T85n2779_001:0536b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄心須看內外照。",
        "from": "T85n2779_001:0536b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼中有翳須磨曜。",
        "from": "T85n2779_001:0536b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銅鏡不磨不中照。",
        "from": "T85n2779_001:0536b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙燎料作好。",
        "from": "T85n2779_001:0536b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑訶耶莫惱。",
        "from": "T85n2779_001:0536b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按賴畔按賴畔。",
        "from": "T85n2779_001:0536b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六心離禪門觀。",
        "from": "T85n2779_001:0536b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不來不去無崖畔。",
        "from": "T85n2779_001:0536b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺上看覺除定亂。",
        "from": "T85n2779_001:0536b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子與眾生同體段。",
        "from": "T85n2779_001:0536b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本原清淨磨垢散歎。",
        "from": "T85n2779_001:0536b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底利歎魯留盧樓按賴畔　諸佛子莫楞看。",
        "from": "T85n2779_001:0536b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道上大有羅剎喚。",
        "from": "T85n2779_001:0536b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人來去常繫絆。",
        "from": "T85n2779_001:0536b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染著色塵心僚亂。",
        "from": "T85n2779_001:0536b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行住坐臥無體段。",
        "from": "T85n2779_001:0536b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於眾中漫叫喚。",
        "from": "T85n2779_001:0536b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得他勸諫即橛難。",
        "from": "T85n2779_001:0536b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耶羅邏荼灌。",
        "from": "T85n2779_001:0536b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑訶耶鈍漢。",
        "from": "T85n2779_001:0536b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普路喻普路喻。",
        "from": "T85n2779_001:0536b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七圓明大慧悟。",
        "from": "T85n2779_001:0536b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四門十八離名數。",
        "from": "T85n2779_001:0536b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅妙有懸通度。",
        "from": "T85n2779_001:0536b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界大師實難遇。",
        "from": "T85n2779_001:0536b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死涅槃不合渡。",
        "from": "T85n2779_001:0536b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛河逆上不留住。",
        "from": "T85n2779_001:0536b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即心非心魔自去。",
        "from": "T85n2779_001:0536b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去底利去魯留盧樓普路喻　諸佛子常覺悟。",
        "from": "T85n2779_001:0536b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念淨心無染污。",
        "from": "T85n2779_001:0536b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔軍自然去。",
        "from": "T85n2779_001:0536b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閭閭屢專注。",
        "from": "T85n2779_001:0536c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑訶耶大悟。",
        "from": "T85n2779_001:0536c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗄略藥嗄略藥。",
        "from": "T85n2779_001:0536c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八禪門絕針酌。",
        "from": "T85n2779_001:0536c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不高不下無樓閣。",
        "from": "T85n2779_001:0536c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出不入無城墎。",
        "from": "T85n2779_001:0536c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是想顯聲即初學。",
        "from": "T85n2779_001:0536c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生心動念勿令著。",
        "from": "T85n2779_001:0536c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久坐用功作非作。",
        "from": "T85n2779_001:0536c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無樂可樂是常樂。",
        "from": "T85n2779_001:0536c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧燈一照三千墎。",
        "from": "T85n2779_001:0536c05_8",
        "context_with_next_sentence": true
    },
    {
