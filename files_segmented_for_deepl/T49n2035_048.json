[
    {
        "source_sentence": "佛祖統紀卷第四十八",
        "from": "T49n2035_048:0430c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋咸淳四明東湖沙門志磐撰",
        "from": "T49n2035_048:0430c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法運通塞志第十七之十五",
        "from": "T49n2035_048:0430c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧宗(光宗子。",
        "from": "T49n2035_048:0430c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母慈懿皇后李氏十月十九日瑞慶節　永茂陵)慶元三年。",
        "from": "T49n2035_048:0430c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊門軍申忠翌郎趙善瑩狀。",
        "from": "T49n2035_048:0430c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當陽縣玉泉山景德禪寺為隋智者禪師開山道場。",
        "from": "T49n2035_048:0430c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜀將軍關王奉智者為師。",
        "from": "T49n2035_048:0430c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈禱屢應。",
        "from": "T49n2035_048:0430c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞賜加封。",
        "from": "T49n2035_048:0430c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅宣賜靈惠大師。",
        "from": "T49n2035_048:0430c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉泰二年。",
        "from": "T49n2035_048:0430c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘杭南山白雲庵道民。",
        "from": "T49n2035_048:0430c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈智元。",
        "from": "T49n2035_048:0430c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞賜勅額。",
        "from": "T49n2035_048:0430c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣寮言。",
        "from": "T49n2035_048:0430c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道民者。",
        "from": "T49n2035_048:0430c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊墮不逞。",
        "from": "T49n2035_048:0430c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喫菜事魔。",
        "from": "T49n2035_048:0430c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂姦民者也。",
        "from": "T49n2035_048:0431a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自植黨與十百為群。",
        "from": "T49n2035_048:0431a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "挾持妖教聾瞽愚俗。",
        "from": "T49n2035_048:0431a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以修路建橋為名。",
        "from": "T49n2035_048:0431a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或效誦經焚香為會。",
        "from": "T49n2035_048:0431a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜聚曉散男女無別。",
        "from": "T49n2035_048:0431a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所至各有渠魁相統。",
        "from": "T49n2035_048:0431a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇有諍訟合謀并力。",
        "from": "T49n2035_048:0431a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厚啖胥吏志在必勝。",
        "from": "T49n2035_048:0431a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假名興造自豐囊囊。",
        "from": "T49n2035_048:0431a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "創置私庵以為逋逃淵藪。",
        "from": "T49n2035_048:0431a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智元偽民之魁。",
        "from": "T49n2035_048:0431a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左道惑眾。",
        "from": "T49n2035_048:0431a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揆之國法罪不勝誅。",
        "from": "T49n2035_048:0431a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張枃帥京之日。",
        "from": "T49n2035_048:0431a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屢與隣寺互論已判。",
        "from": "T49n2035_048:0431a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人私庵合照前降指揮拆除。",
        "from": "T49n2035_048:0431a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今智元又敢妄叩天閽玩侮朝廷。",
        "from": "T49n2035_048:0431a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此為甚。",
        "from": "T49n2035_048:0431a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔傳五斗米道者。",
        "from": "T49n2035_048:0431a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始託黃老分遣弟子。",
        "from": "T49n2035_048:0431a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遊四方轉相誑誘。",
        "from": "T49n2035_048:0431a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後數十萬眾。",
        "from": "T49n2035_048:0431a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同日竊發漢室遂微。",
        "from": "T49n2035_048:0431a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此曹若不防閑。",
        "from": "T49n2035_048:0431a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何所不至。",
        "from": "T49n2035_048:0431a13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲下臨安府將智元等重行編竄。",
        "from": "T49n2035_048:0431a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "籍其物業以為傳習魔法。",
        "from": "T49n2035_048:0431a14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玩視典憲者之戒。",
        "from": "T49n2035_048:0431a15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄居勢家認為己產。",
        "from": "T49n2035_048:0431a15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋庇執占者。",
        "from": "T49n2035_048:0431a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臺諫指名以奏。",
        "from": "T49n2035_048:0431a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制可。",
        "from": "T49n2035_048:0431a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述曰。",
        "from": "T49n2035_048:0431a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗考夷堅志云。",
        "from": "T49n2035_048:0431a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喫菜事魔三山尤熾。",
        "from": "T49n2035_048:0431a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為首者紫帽寬衫。",
        "from": "T49n2035_048:0431a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婦人黑冠白服。",
        "from": "T49n2035_048:0431a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱為明教會。",
        "from": "T49n2035_048:0431a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所事佛衣白。",
        "from": "T49n2035_048:0431a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引經中所謂白佛言世尊。",
        "from": "T49n2035_048:0431a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取金剛經一佛二佛三四五佛。",
        "from": "T49n2035_048:0431a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為第五佛。",
        "from": "T49n2035_048:0431a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又名末摩尼。",
        "from": "T49n2035_048:0431a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "采化胡經乘自然光明道氣飛入西那玉界蘇鄰國中降誕玉宮為太子出家稱末摩尼。",
        "from": "T49n2035_048:0431a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自表證其經名二宗三際。",
        "from": "T49n2035_048:0431a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二宗者。",
        "from": "T49n2035_048:0431a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明與暗也。",
        "from": "T49n2035_048:0431a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三際者。",
        "from": "T49n2035_048:0431a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去未來現在也。",
        "from": "T49n2035_048:0431a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中祥符興道藏。",
        "from": "T49n2035_048:0431a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富人林世長。",
        "from": "T49n2035_048:0431a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賂主者使編入藏。",
        "from": "T49n2035_048:0431a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於亳州明道宮。",
        "from": "T49n2035_048:0431a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復假稱白樂天詩云。",
        "from": "T49n2035_048:0431a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜覽蘇鄰傳。",
        "from": "T49n2035_048:0431a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼道可驚。",
        "from": "T49n2035_048:0431a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二宗陳寂默。",
        "from": "T49n2035_048:0431a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五佛繼光明。",
        "from": "T49n2035_048:0431a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月為資敬。",
        "from": "T49n2035_048:0431a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾坤認所生。",
        "from": "T49n2035_048:0431a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若論齋絜志。",
        "from": "T49n2035_048:0431b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋子好齊名。",
        "from": "T49n2035_048:0431b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此八句表於經首。",
        "from": "T49n2035_048:0431b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其修持者正午一食。",
        "from": "T49n2035_048:0431b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裸屍以葬。",
        "from": "T49n2035_048:0431b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七時作禮。",
        "from": "T49n2035_048:0431b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋黃巾之遺習也(嘗檢樂天長慶集。",
        "from": "T49n2035_048:0431b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無蘇鄰之詩。",
        "from": "T49n2035_048:0431b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂天知佛。",
        "from": "T49n2035_048:0431b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈應為此不典之詞)。",
        "from": "T49n2035_048:0431b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉定四年閏二月。",
        "from": "T49n2035_048:0431b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丞相錢象祖薨於天台里第。",
        "from": "T49n2035_048:0431b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象祖之守金陵。",
        "from": "T49n2035_048:0431b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗問道於保寧全無用。",
        "from": "T49n2035_048:0431b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於鄉州建接待十所。",
        "from": "T49n2035_048:0431b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以淨土極樂名之。",
        "from": "T49n2035_048:0431b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "創止菴高僧寮為談道之處。",
        "from": "T49n2035_048:0431b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自左相辭歸。",
        "from": "T49n2035_048:0431b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益修淨業。",
        "from": "T49n2035_048:0431b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是月得微疾。",
        "from": "T49n2035_048:0431b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧有問起居者。",
        "from": "T49n2035_048:0431b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則曰。",
        "from": "T49n2035_048:0431b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不貪生不怖死。",
        "from": "T49n2035_048:0431b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生天不生人。",
        "from": "T49n2035_048:0431b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯當往生淨土耳。",
        "from": "T49n2035_048:0431b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖趺坐而化。",
        "from": "T49n2035_048:0431b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時天鼓震響異香芬郁。",
        "from": "T49n2035_048:0431b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未終之前。",
        "from": "T49n2035_048:0431b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郡人子女同夢空中聲云。",
        "from": "T49n2035_048:0431b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錢丞相當生西方蓮宮為慈濟菩薩。",
        "from": "T49n2035_048:0431b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理宗(嘉定十四年。",
        "from": "T49n2035_048:0431b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔以太祖下十一世與莒。",
        "from": "T49n2035_048:0431b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜名貴誠。",
        "from": "T49n2035_048:0431b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立為皇弟沂靖惠王。",
        "from": "T49n2035_048:0431b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十七年封成國公。",
        "from": "T49n2035_048:0431b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受遺詔即帝位。",
        "from": "T49n2035_048:0431b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正月五日天基節)寶慶二年。",
        "from": "T49n2035_048:0431b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅天申萬壽圓覺寺。",
        "from": "T49n2035_048:0431b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改為天台教。",
        "from": "T49n2035_048:0431b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以師贊法師主之。",
        "from": "T49n2035_048:0431b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳佑六年十一月。",
        "from": "T49n2035_048:0431b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨安明慶聞思律師奏。",
        "from": "T49n2035_048:0431b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南山澄照律師戒疏業疏事鈔等。",
        "from": "T49n2035_048:0431b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并大智律師述三部諸記。",
        "from": "T49n2035_048:0431b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共七十三卷。",
        "from": "T49n2035_048:0431b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞附入大藏。",
        "from": "T49n2035_048:0431b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制可。",
        "from": "T49n2035_048:0431b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "績據省部下諸郡經坊。",
        "from": "T49n2035_048:0431b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏤板頒行。",
        "from": "T49n2035_048:0431b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳佑十年三月。",
        "from": "T49n2035_048:0431b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣寮上言。",
        "from": "T49n2035_048:0431b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國家優禮元勳大臣近貴戚里。",
        "from": "T49n2035_048:0431b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽陳乞守墳寺額。",
        "from": "T49n2035_048:0431b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋謂自造屋宇自置田產。",
        "from": "T49n2035_048:0431b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以資薦祖父。",
        "from": "T49n2035_048:0431b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因與之額。",
        "from": "T49n2035_048:0431b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故大觀降旨。",
        "from": "T49n2035_048:0431b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許近臣指射有額寺院。",
        "from": "T49n2035_048:0431b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充守墳功德。",
        "from": "T49n2035_048:0431b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及紹興新書。",
        "from": "T49n2035_048:0431b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許指射有額寺院。",
        "from": "T49n2035_048:0431b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著在令甲。",
        "from": "T49n2035_048:0431b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡勳臣戚里有功德院。",
        "from": "T49n2035_048:0431b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止是賜額蠲免科敷之類。",
        "from": "T49n2035_048:0431b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽從本家請僧住持。",
        "from": "T49n2035_048:0431b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初非以國家有額寺院與之。",
        "from": "T49n2035_048:0431c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邇年士夫一登政府。",
        "from": "T49n2035_048:0431c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便萌規利指射名剎。",
        "from": "T49n2035_048:0431c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改充功德侵奪田產。",
        "from": "T49n2035_048:0431c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如置一莊。",
        "from": "T49n2035_048:0431c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子弟無狀多受庸僧財賄。",
        "from": "T49n2035_048:0431c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用為住持。",
        "from": "T49n2035_048:0431c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "米鹽薪炭隨時供納。",
        "from": "T49n2035_048:0431c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一寺而養一家。",
        "from": "T49n2035_048:0431c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為污辱祖宗多矣。",
        "from": "T49n2035_048:0431c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況宰執之家所在為多。",
        "from": "T49n2035_048:0431c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人占數寺。",
        "from": "T49n2035_048:0431c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則國家名剎所餘無幾。",
        "from": "T49n2035_048:0431c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官中一有科需。",
        "from": "T49n2035_048:0431c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必均諸人戶。",
        "from": "T49n2035_048:0431c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不重為民害。",
        "from": "T49n2035_048:0431c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣愚欲望睿旨申嚴舊制應指占勅額寺院並與追正。",
        "from": "T49n2035_048:0431c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍從官司請僧。",
        "from": "T49n2035_048:0431c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶以杜絕私家交通寺院賄貨之弊。",
        "from": "T49n2035_048:0431c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制可。",
        "from": "T49n2035_048:0431c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台沙門思廉。",
        "from": "T49n2035_048:0431c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致書於杜清獻公曰。",
        "from": "T49n2035_048:0431c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛囑國君大臣護持佛法。",
        "from": "T49n2035_048:0431c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而反破壞佛法者。",
        "from": "T49n2035_048:0431c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一事最為要。",
        "from": "T49n2035_048:0431c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝廷立法。",
        "from": "T49n2035_048:0431c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許大臣為祖父以家財造寺乞額。",
        "from": "T49n2035_048:0431c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以薦福為先亡也。",
        "from": "T49n2035_048:0431c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今昧者為之則不然。",
        "from": "T49n2035_048:0431c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以祖父玉體之重。",
        "from": "T49n2035_048:0431c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能捐財買山。",
        "from": "T49n2035_048:0431c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既已奪取僧藍之地以為墳。",
        "from": "T49n2035_048:0431c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而又欲影占數寺稱為功德。",
        "from": "T49n2035_048:0431c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉寺中所有諸物而有之。",
        "from": "T49n2035_048:0431c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日發米明日發茶筍。",
        "from": "T49n2035_048:0431c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又明日發柴炭。",
        "from": "T49n2035_048:0431c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又明日發竹木。",
        "from": "T49n2035_048:0431c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚至於月奉水陸之珍。",
        "from": "T49n2035_048:0431c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一有亡僧則必掩取其物。",
        "from": "T49n2035_048:0431c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸之私帑。",
        "from": "T49n2035_048:0431c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗聞時貴之言曰。",
        "from": "T49n2035_048:0431c21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請過功德一鍼一草皆我家之物。",
        "from": "T49n2035_048:0431c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀哉。",
        "from": "T49n2035_048:0431c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼誠不知常住物業亡僧財物皆屬三寶。",
        "from": "T49n2035_048:0431c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侵奪之者。",
        "from": "T49n2035_048:0431c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若主若僕必招苦報。",
        "from": "T49n2035_048:0431c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其於安厝祖父之體魄。",
        "from": "T49n2035_048:0431c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧不貽三塗之惡報乎。",
        "from": "T49n2035_048:0431c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吁占奪伽藍欺君也。",
        "from": "T49n2035_048:0431c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葬父僧地陷父也。",
        "from": "T49n2035_048:0431c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自為不法賊己也。",
        "from": "T49n2035_048:0431c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不法教子弟。",
        "from": "T49n2035_048:0431c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累人也。",
        "from": "T49n2035_048:0431c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欺君者不忠。",
        "from": "T49n2035_048:0431c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陷父者不孝。",
        "from": "T49n2035_048:0431c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賊己者不智。",
        "from": "T49n2035_048:0431c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累人者不仁。",
        "from": "T49n2035_048:0431c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此以為人。",
        "from": "T49n2035_048:0431c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是誠何人哉。",
        "from": "T49n2035_048:0431c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今名勝道場效尤而奪取者幾遍諸郡。",
        "from": "T49n2035_048:0432a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一屬功德則使庸繆之輩以居之。",
        "from": "T49n2035_048:0432a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方竭力奉承之不暇。",
        "from": "T49n2035_048:0432a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又寧能辨清供以安廣眾乎。",
        "from": "T49n2035_048:0432a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以故尋師問道者。",
        "from": "T49n2035_048:0432a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翩翩南北。",
        "from": "T49n2035_048:0432a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但能嗟時事之不然而已。",
        "from": "T49n2035_048:0432a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "區區愚衷欲望大丞相明察積弊檢準舊法。",
        "from": "T49n2035_048:0432a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡宰執之家。",
        "from": "T49n2035_048:0432a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除四明大慈七山。",
        "from": "T49n2035_048:0432a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "史氏自造請額合格外自餘占奪有額舊寺者。",
        "from": "T49n2035_048:0432a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專令臺部置司行下諸郡從實供析悉與拘回。",
        "from": "T49n2035_048:0432a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並從所屬州郡給帖住持。",
        "from": "T49n2035_048:0432a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍釐正在前侵占山林屋宇歸還各寺。",
        "from": "T49n2035_048:0432a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子弟有敢與住持交通如前侵占者。",
        "from": "T49n2035_048:0432a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許雜人密告臺部追捕幹吏斷刺。",
        "from": "T49n2035_048:0432a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號令住持勒令罷道。",
        "from": "T49n2035_048:0432a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清整法門申明朝憲。",
        "from": "T49n2035_048:0432a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠有在於大丞相奉行之力。",
        "from": "T49n2035_048:0432a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為物論動搖為可耳。",
        "from": "T49n2035_048:0432a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云云。",
        "from": "T49n2035_048:0432a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端平元年。",
        "from": "T49n2035_048:0432a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈山守愚法師奏。",
        "from": "T49n2035_048:0432a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明延慶法智大師。",
        "from": "T49n2035_048:0432a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中興天台一家教觀。",
        "from": "T49n2035_048:0432a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所著記鈔二百餘卷。",
        "from": "T49n2035_048:0432a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞入大藏頒行。",
        "from": "T49n2035_048:0432a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制可。",
        "from": "T49n2035_048:0432a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端平三年。",
        "from": "T49n2035_048:0432a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明沙門海印刪修陸師壽寶珠集。",
        "from": "T49n2035_048:0432a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續集淨業有驗者。",
        "from": "T49n2035_048:0432a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名淨土往生傳十二卷(志磐刪為淨土立教志。",
        "from": "T49n2035_048:0432a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡三卷。",
        "from": "T49n2035_048:0432a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入統紀中。",
        "from": "T49n2035_048:0432a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最為簡要)。",
        "from": "T49n2035_048:0432a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖統紀卷第四十八(終)",
        "from": "T49n2035_048:0432a22_0",
        "context_with_next_sentence": false
    }
]