[
    {
        "source_sentence": "祇園正儀",
        "from": "X63n1233_001:0166c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫出家者。",
        "from": "X63n1233_001:0166c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為厭塵勞。",
        "from": "X63n1233_001:0166c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求脫生死。",
        "from": "X63n1233_001:0166c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "休心息念。",
        "from": "X63n1233_001:0166c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷絕攀緣。",
        "from": "X63n1233_001:0166c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名出家。",
        "from": "X63n1233_001:0166c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可以等閒利養埋沒平生。",
        "from": "X63n1233_001:0166c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直須兩頭撒開。",
        "from": "X63n1233_001:0166c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中間放下。",
        "from": "X63n1233_001:0166c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇聲遇色如石上栽花。",
        "from": "X63n1233_001:0166c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見利見名似眼中著屑。",
        "from": "X63n1233_001:0166c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況從無始以來。",
        "from": "X63n1233_001:0166c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是不曾經歷。",
        "from": "X63n1233_001:0166c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不是不知次第。",
        "from": "X63n1233_001:0166c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不過翻頭作尾止於如此。",
        "from": "X63n1233_001:0166c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何須苦苦貪戀。",
        "from": "X63n1233_001:0166c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今不歇。",
        "from": "X63n1233_001:0166c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更待何時。",
        "from": "X63n1233_001:0166c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以先聖教人。",
        "from": "X63n1233_001:0166c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只要盡却今時。",
        "from": "X63n1233_001:0166c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能盡今時更有何事。",
        "from": "X63n1233_001:0166c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得心中無事。",
        "from": "X63n1233_001:0166c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖猶是冤家。",
        "from": "X63n1233_001:0166c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世事自然冷淡。",
        "from": "X63n1233_001:0166c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方始那邊相應。",
        "from": "X63n1233_001:0166c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儞不見隱山至死不肯見人。",
        "from": "X63n1233_001:0166c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州至死不昔告人。",
        "from": "X63n1233_001:0166c17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匾擔拾橡栗為食。",
        "from": "X63n1233_001:0166c17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梅以荷葉為衣。",
        "from": "X63n1233_001:0166c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紙衣道者只披紙。",
        "from": "X63n1233_001:0166c18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄泰上座只著布。",
        "from": "X63n1233_001:0166c18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石霜置枯木堂與眾座臥。",
        "from": "X63n1233_001:0166c18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只要死了儞心。",
        "from": "X63n1233_001:0166c19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投子使人辦米同煑共餐。",
        "from": "X63n1233_001:0166c19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要得省取儞事。",
        "from": "X63n1233_001:0166c20_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且從上諸聖有如此榜樣。",
        "from": "X63n1233_001:0166c20_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無長處如何甘得。",
        "from": "X63n1233_001:0166c21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸仁者。",
        "from": "X63n1233_001:0166c21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若也於斯體究。",
        "from": "X63n1233_001:0166c21_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "的不虧人。",
        "from": "X63n1233_001:0166c21_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若也不肯承當。",
        "from": "X63n1233_001:0166c22_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向後深恐費力。",
        "from": "X63n1233_001:0166c22_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧行業無取。",
        "from": "X63n1233_001:0166c22_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忝主山門。",
        "from": "X63n1233_001:0166c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可坐費常住。",
        "from": "X63n1233_001:0166c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓忘先聖附囑。",
        "from": "X63n1233_001:0166c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者輙欲略斆古人為住持體例。",
        "from": "X63n1233_001:0166c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸人議定。",
        "from": "X63n1233_001:0166c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不下山。",
        "from": "X63n1233_001:0166c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不赴齋。",
        "from": "X63n1233_001:0166c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不發化主。",
        "from": "X63n1233_001:0167a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯將本院莊課一歲所得均作三百六十分。",
        "from": "X63n1233_001:0167a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日取一分用之。",
        "from": "X63n1233_001:0167a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不隨人添減。",
        "from": "X63n1233_001:0167a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以備飯則作飯。",
        "from": "X63n1233_001:0167a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作飯不足則作粥。",
        "from": "X63n1233_001:0167a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作粥不足則作米湯。",
        "from": "X63n1233_001:0167a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "新到相見茶湯而已。",
        "from": "X63n1233_001:0167a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不煎點。",
        "from": "X63n1233_001:0167a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯置一茶堂。",
        "from": "X63n1233_001:0167a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自去取用。",
        "from": "X63n1233_001:0167a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務要省緣專一辨道。",
        "from": "X63n1233_001:0167a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又況活計具足。",
        "from": "X63n1233_001:0167a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風景不疎。",
        "from": "X63n1233_001:0167a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華解笑。",
        "from": "X63n1233_001:0167a05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳥解啼。",
        "from": "X63n1233_001:0167a05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木馬長鳴。",
        "from": "X63n1233_001:0167a06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石牛善走。",
        "from": "X63n1233_001:0167a06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天外之青山寡色。",
        "from": "X63n1233_001:0167a06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳畔之鳴泉無聲。",
        "from": "X63n1233_001:0167a06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嶺上猿啼露濕中霄之月。",
        "from": "X63n1233_001:0167a07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "林間鶴唳風回清曉之松。",
        "from": "X63n1233_001:0167a07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春風起時枯木龍吟。",
        "from": "X63n1233_001:0167a08_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秋葉凋而寒林花散。",
        "from": "X63n1233_001:0167a08_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉階舖苔蘚之紋。",
        "from": "X63n1233_001:0167a08_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人面帶煙霞之色。",
        "from": "X63n1233_001:0167a09_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "音塵寂爾。",
        "from": "X63n1233_001:0167a09_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消息宛然。",
        "from": "X63n1233_001:0167a09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一味蕭條無可趣向。",
        "from": "X63n1233_001:0167a10_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧今日向諸人面前說家門已是不著便。",
        "from": "X63n1233_001:0167a10_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可更去陞堂入室。",
        "from": "X63n1233_001:0167a11_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈槌竪拂。",
        "from": "X63n1233_001:0167a11_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東喝西棒。",
        "from": "X63n1233_001:0167a11_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張眉怒目。",
        "from": "X63n1233_001:0167a12_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如癇病發相似。",
        "from": "X63n1233_001:0167a12_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不唯屈沉上座。",
        "from": "X63n1233_001:0167a12_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況辜負先聖。",
        "from": "X63n1233_001:0167a12_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儞不見達磨西來到少室山下面壁九年。",
        "from": "X63n1233_001:0167a13_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二祖至於立雪斷臂。",
        "from": "X63n1233_001:0167a13_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂受盡艱辛。",
        "from": "X63n1233_001:0167a14_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而達磨不曾措了一詞。",
        "from": "X63n1233_001:0167a14_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二祖不曾問著一句。",
        "from": "X63n1233_001:0167a15_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還喚達磨作不為人得麼。",
        "from": "X63n1233_001:0167a15_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喚二祖做不求師得麼。",
        "from": "X63n1233_001:0167a16_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧每至說著古聖做處。",
        "from": "X63n1233_001:0167a16_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便覺無地容身。",
        "from": "X63n1233_001:0167a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慚愧後人軟弱又。",
        "from": "X63n1233_001:0167a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況百味珍羞遞相供養。",
        "from": "X63n1233_001:0167a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道我四事具足方可發心。",
        "from": "X63n1233_001:0167a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只恐做手脚不迄。",
        "from": "X63n1233_001:0167a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便此隔生隔世去也。",
        "from": "X63n1233_001:0167a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時光似箭深為可惜。",
        "from": "X63n1233_001:0167a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然如是。",
        "from": "X63n1233_001:0167a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更在他人從長相度。",
        "from": "X63n1233_001:0167a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧也強教儞不得。",
        "from": "X63n1233_001:0167a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸仁者還見古人偈麼。",
        "from": "X63n1233_001:0167a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山田脫粟飯。",
        "from": "X63n1233_001:0167a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "野菜淡黃虀。",
        "from": "X63n1233_001:0167a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喫則從君喫。",
        "from": "X63n1233_001:0167a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不喫任東西。",
        "from": "X63n1233_001:0167a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏惟同道。",
        "from": "X63n1233_001:0167a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各自努力。",
        "from": "X63n1233_001:0167a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珍重。",
        "from": "X63n1233_001:0167a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 跋刻芙蓉楷祖法語",
        "from": "X63n1233_001:0167b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏虖。",
        "from": "X63n1233_001:0167b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若干吾黨之晚生。",
        "from": "X63n1233_001:0167b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夙夜汲汲乎以富榮不充乎身名聲不章乎世為患。",
        "from": "X63n1233_001:0167b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖外則從事禪誦假現僧儀。",
        "from": "X63n1233_001:0167b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內則全措己躬大事於度外。",
        "from": "X63n1233_001:0167b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恬然不識。",
        "from": "X63n1233_001:0167b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自顧者日披誦此芙蓉楷祖之嚴訓。",
        "from": "X63n1233_001:0167b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以竊生慚耻。",
        "from": "X63n1233_001:0167b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則庶幾至于不倦進修。",
        "from": "X63n1233_001:0167b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裨助性地歟。",
        "from": "X63n1233_001:0167b10_9",
        "context_with_next_sentence": true
    },
    {
