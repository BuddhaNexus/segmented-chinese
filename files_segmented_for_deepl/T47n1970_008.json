[
    {
        "source_sentence": "龍舒增廣淨土文卷第八",
        "from": "T47n1970_008:0276c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國學進士王日休譔",
        "from": "T47n1970_008:0276c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極樂世界雖去此百萬世界。",
        "from": "T47n1970_008:0276c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論其迹則不勝其遠。",
        "from": "T47n1970_008:0276c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然佛之慧性含虛空世界。",
        "from": "T47n1970_008:0276c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無所不在。",
        "from": "T47n1970_008:0276c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以一切眾生舉意動步。",
        "from": "T47n1970_008:0276c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆在佛之性中。",
        "from": "T47n1970_008:0276c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懇切。",
        "from": "T47n1970_008:0276c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不應驗。",
        "from": "T47n1970_008:0276c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故此卷敘現世感應。",
        "from": "T47n1970_008:0276c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀音感應記云。",
        "from": "T47n1970_008:0276c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饒州軍典鄭鄰死至陰府。",
        "from": "T47n1970_008:0276c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誤追來放還。",
        "from": "T47n1970_008:0276c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅王告云。",
        "from": "T47n1970_008:0276c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝還人間。",
        "from": "T47n1970_008:0276c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勉力為善。",
        "from": "T47n1970_008:0276c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝見人殺生。",
        "from": "T47n1970_008:0276c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但念阿彌陀佛與觀世音菩薩。",
        "from": "T47n1970_008:0276c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼得受生。",
        "from": "T47n1970_008:0277a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝亦得福。",
        "from": "T47n1970_008:0277a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此推之。",
        "from": "T47n1970_008:0277a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足以見念阿彌陀佛。",
        "from": "T47n1970_008:0277a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠可薦拔亡者。",
        "from": "T47n1970_008:0277a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可增延福壽。",
        "from": "T47n1970_008:0277a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不特身後生西方而已。",
        "from": "T47n1970_008:0277a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳企念佛却鬼",
        "from": "T47n1970_008:0277a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予同郡望江陳企嘗妄殺人。",
        "from": "T47n1970_008:0277a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後見鬼現。",
        "from": "T47n1970_008:0277a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "企畏懼。",
        "from": "T47n1970_008:0277a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急念阿彌陀佛。",
        "from": "T47n1970_008:0277a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼不敢近。",
        "from": "T47n1970_008:0277a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "企念佛不已。",
        "from": "T47n1970_008:0277a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼遂不現。",
        "from": "T47n1970_008:0277a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後常念佛。",
        "from": "T47n1970_008:0277a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨終坐化。",
        "from": "T47n1970_008:0277a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後半年附本家孫女名妙光云。",
        "from": "T47n1970_008:0277a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我因念阿彌陀佛。",
        "from": "T47n1970_008:0277a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已生極樂世界。",
        "from": "T47n1970_008:0277a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉動言語一如平生。",
        "from": "T47n1970_008:0277a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親戚相知皆來看。",
        "from": "T47n1970_008:0277a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至兩三日家人云。",
        "from": "T47n1970_008:0277a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜乎爾在生時。",
        "from": "T47n1970_008:0277a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不曾傳得喜神供養。",
        "from": "T47n1970_008:0277a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "企遂現。",
        "from": "T47n1970_008:0277a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儼然如平生。",
        "from": "T47n1970_008:0277a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯面帶少顏。",
        "from": "T47n1970_008:0277a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋西方長生不老。",
        "from": "T47n1970_008:0277a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其頭如佛之螺髻。",
        "from": "T47n1970_008:0277a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋成佛漸也。",
        "from": "T47n1970_008:0277a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "望江士人周憲叔為予言之。",
        "from": "T47n1970_008:0277a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄒賓王念佛夢覺",
        "from": "T47n1970_008:0277a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予嘗勸鎮江士人鄒賓王。",
        "from": "T47n1970_008:0277a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以西方說。",
        "from": "T47n1970_008:0277a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且言。",
        "from": "T47n1970_008:0277a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無間暇。",
        "from": "T47n1970_008:0277a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但早晨合掌。",
        "from": "T47n1970_008:0277a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向西念南謨阿彌陀佛十遍亦得。",
        "from": "T47n1970_008:0277a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賓王信之。",
        "from": "T47n1970_008:0277a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夜遂夢。",
        "from": "T47n1970_008:0277a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與一士人同赴法正。",
        "from": "T47n1970_008:0277a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐懼間遂念阿彌陀佛至十聲乃覺。",
        "from": "T47n1970_008:0277a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非佛以此堅其信心乎。",
        "from": "T47n1970_008:0277a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張繼祖念佛薦亡",
        "from": "T47n1970_008:0277a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予嘗與鎮江士人張繼祖。",
        "from": "T47n1970_008:0277a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言西方事。",
        "from": "T47n1970_008:0277a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼祖信之。",
        "from": "T47n1970_008:0277a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其乳母死多。",
        "from": "T47n1970_008:0277a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為念阿彌陀佛追薦。",
        "from": "T47n1970_008:0277a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夜夢其乳母。",
        "from": "T47n1970_008:0277a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "借背子衣之來謝繼祖而別去。",
        "from": "T47n1970_008:0277a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此念佛追薦之效也。",
        "from": "T47n1970_008:0277a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉慧仲念佛安寢",
        "from": "T47n1970_008:0277a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予舊相識劉仲慧湖州長興人。",
        "from": "T47n1970_008:0277a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以夜夢多恐懼。",
        "from": "T47n1970_008:0277a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予勸以念阿彌陀佛。",
        "from": "T47n1970_008:0277a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧仲至誠聲念一百八遍。",
        "from": "T47n1970_008:0277a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當夜遂安寢。",
        "from": "T47n1970_008:0277a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次日如前念誦。",
        "from": "T47n1970_008:0277a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自此皆得安寢。",
        "from": "T47n1970_008:0277a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此見佛力廣大無所不可。",
        "from": "T47n1970_008:0277a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此予序所謂安靜形神者也。",
        "from": "T47n1970_008:0277a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阮嫂念佛眼明",
        "from": "T47n1970_008:0277b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予同郡懷寧縣營田莊有阮念三。",
        "from": "T47n1970_008:0277b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嫂患兩目將盲。",
        "from": "T47n1970_008:0277b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常念阿彌陀佛。",
        "from": "T47n1970_008:0277b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂得開眼。",
        "from": "T47n1970_008:0277b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此予親見之。",
        "from": "T47n1970_008:0277b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅王勸婆念佛",
        "from": "T47n1970_008:0277b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎮江金壇縣株林村蔣婆年七十許。",
        "from": "T47n1970_008:0277b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死至陰府。",
        "from": "T47n1970_008:0277b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命未盡。",
        "from": "T47n1970_008:0277b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當還。",
        "from": "T47n1970_008:0277b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅王問云。",
        "from": "T47n1970_008:0277b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能念經否。",
        "from": "T47n1970_008:0277b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對云。",
        "from": "T47n1970_008:0277b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能。",
        "from": "T47n1970_008:0277b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王云。",
        "from": "T47n1970_008:0277b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝不能念經。",
        "from": "T47n1970_008:0277b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但念阿彌陀佛。",
        "from": "T47n1970_008:0277b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既放還。",
        "from": "T47n1970_008:0277b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔣婆謂。",
        "from": "T47n1970_008:0277b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅王教我念佛。",
        "from": "T47n1970_008:0277b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無可疑。",
        "from": "T47n1970_008:0277b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故常念此佛名。",
        "from": "T47n1970_008:0277b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近百二十歲方終。",
        "from": "T47n1970_008:0277b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其生淨土必可必矣。",
        "from": "T47n1970_008:0277b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非以其念佛而又延壽乎。",
        "from": "T47n1970_008:0277b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何其壽之多也。",
        "from": "T47n1970_008:0277b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金壇士人弱延芝為予言之。",
        "from": "T47n1970_008:0277b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邵安撫念佛脫難",
        "from": "T47n1970_008:0277b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉江邵彪字希文。",
        "from": "T47n1970_008:0277b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為士人時。",
        "from": "T47n1970_008:0277b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢至一官府。",
        "from": "T47n1970_008:0277b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人皆稱安撫。",
        "from": "T47n1970_008:0277b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彪自喜曰。",
        "from": "T47n1970_008:0277b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非予及第後作安撫乎。",
        "from": "T47n1970_008:0277b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行至前見一官員。",
        "from": "T47n1970_008:0277b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問云。",
        "from": "T47n1970_008:0277b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝知汝未及第因否。",
        "from": "T47n1970_008:0277b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對云。",
        "from": "T47n1970_008:0277b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知。",
        "from": "T47n1970_008:0277b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令引彪去看。",
        "from": "T47n1970_008:0277b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一大鑊煮蛤蜊。",
        "from": "T47n1970_008:0277b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見彪乃作人聲叫彪姓名。",
        "from": "T47n1970_008:0277b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彪遂念阿彌陀佛。",
        "from": "T47n1970_008:0277b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方念一聲。",
        "from": "T47n1970_008:0277b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛤蜊皆變作黃雀飛去。",
        "from": "T47n1970_008:0277b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彪後果及第至安撫使。",
        "from": "T47n1970_008:0277b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此見。",
        "from": "T47n1970_008:0277b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生阻人前程。",
        "from": "T47n1970_008:0277b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可不戒。",
        "from": "T47n1970_008:0277b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又見佛力廣大。",
        "from": "T47n1970_008:0277b22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可不敬。",
        "from": "T47n1970_008:0277b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官職自有定分。",
        "from": "T47n1970_008:0277b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可苟求。",
        "from": "T47n1970_008:0277b23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛風疾不作",
        "from": "T47n1970_008:0277b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予近附舟至鎮江。",
        "from": "T47n1970_008:0277b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閘中闕水不能行。",
        "from": "T47n1970_008:0277b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃於金山借四經。",
        "from": "T47n1970_008:0277b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即阿彌陀經也。",
        "from": "T47n1970_008:0277b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲校勘刊板廣傳。",
        "from": "T47n1970_008:0277b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉筆之時。",
        "from": "T47n1970_008:0277b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手有風。",
        "from": "T47n1970_008:0277b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其指自掉。",
        "from": "T47n1970_008:0277b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫字不便。",
        "from": "T47n1970_008:0277b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予乃舉指。",
        "from": "T47n1970_008:0277b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念阿彌陀佛與觀世音菩薩數聲。",
        "from": "T47n1970_008:0277b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禱告乞除風疾以成就寫此經。",
        "from": "T47n1970_008:0277b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禱畢指遂不掉。",
        "from": "T47n1970_008:0277b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至終帙無恙。",
        "from": "T47n1970_008:0277c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此見佛。",
        "from": "T47n1970_008:0277c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與菩薩只在目前。",
        "from": "T47n1970_008:0277c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但人信心不至耳。",
        "from": "T47n1970_008:0277c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢中念佛脫恐懼",
        "from": "T47n1970_008:0277c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予於夢寐中有恐懼。",
        "from": "T47n1970_008:0277c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時念阿彌陀佛與觀世音菩薩。",
        "from": "T47n1970_008:0277c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗不即安穩。",
        "from": "T47n1970_008:0277c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或即覺惺。",
        "from": "T47n1970_008:0277c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足以見佛與菩薩。",
        "from": "T47n1970_008:0277c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威神之速如此。",
        "from": "T47n1970_008:0277c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但辨信心。",
        "from": "T47n1970_008:0277c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "效無不應。",
        "from": "T47n1970_008:0277c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛屋不壓死",
        "from": "T47n1970_008:0277c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一老婦雙瞽。",
        "from": "T47n1970_008:0277c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令小兒牽行。",
        "from": "T47n1970_008:0277c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常念阿彌陀佛。",
        "from": "T47n1970_008:0277c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日息於舊屋之下。",
        "from": "T47n1970_008:0277c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屋忽傾倒。",
        "from": "T47n1970_008:0277c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小兒走去。",
        "from": "T47n1970_008:0277c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老婦在下。",
        "from": "T47n1970_008:0277c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃有二木相拄護於老婦之上。",
        "from": "T47n1970_008:0277c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得不壓死。",
        "from": "T47n1970_008:0277c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此念佛之效也。",
        "from": "T47n1970_008:0277c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙定居士為予言之。",
        "from": "T47n1970_008:0277c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛痁疾遂愈",
        "from": "T47n1970_008:0277c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有官員李子清。",
        "from": "T47n1970_008:0277c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄居秀州。",
        "from": "T47n1970_008:0277c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗好道家。",
        "from": "T47n1970_008:0277c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗從學於予。",
        "from": "T47n1970_008:0277c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前年久苦痁疾。",
        "from": "T47n1970_008:0277c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予告之云。",
        "from": "T47n1970_008:0277c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但恐子清不信。",
        "from": "T47n1970_008:0277c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若信之必效。",
        "from": "T47n1970_008:0277c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予乃授以一方。",
        "from": "T47n1970_008:0277c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令臨發時專念阿彌陀佛而服此藥。",
        "from": "T47n1970_008:0277c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子清從之。",
        "from": "T47n1970_008:0277c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其日遂愈八分。",
        "from": "T47n1970_008:0277c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次日復如是遂全愈。",
        "from": "T47n1970_008:0277c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子清由是篤信佛理。",
        "from": "T47n1970_008:0277c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以淨土文置於袖中。",
        "from": "T47n1970_008:0277c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛痼疾皆愈",
        "from": "T47n1970_008:0277c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁氏女兩目俱盲。",
        "from": "T47n1970_008:0277c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念阿彌陀佛三年。",
        "from": "T47n1970_008:0277c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫念不絕。",
        "from": "T47n1970_008:0277c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙目開明。",
        "from": "T47n1970_008:0277c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又馮氏夫人亦念佛。",
        "from": "T47n1970_008:0277c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久病遂愈。",
        "from": "T47n1970_008:0277c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見第五卷。",
        "from": "T47n1970_008:0277c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繡佛舍利迸出",
        "from": "T47n1970_008:0277c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贛州廉中大夫恭人繡丈六身阿彌陀佛。",
        "from": "T47n1970_008:0277c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繡方及半。",
        "from": "T47n1970_008:0277c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利迸出。",
        "from": "T47n1970_008:0277c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其親戚鄭逢原為予言之。",
        "from": "T47n1970_008:0277c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛像常有舍利",
        "from": "T47n1970_008:0277c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真州鍾離少師宅。",
        "from": "T47n1970_008:0277c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自任氏夫人修西方。",
        "from": "T47n1970_008:0277c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雕阿彌陀佛像長四寸八分。",
        "from": "T47n1970_008:0277c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龕飾甚嚴。",
        "from": "T47n1970_008:0277c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常頂載行道。",
        "from": "T47n1970_008:0277c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像眉間常迸出舍利。",
        "from": "T47n1970_008:0277c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大如黍米光彩照人出寶珠集。",
        "from": "T47n1970_008:0277c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢佛遂得聰辯",
        "from": "T47n1970_008:0278a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋慧思禪師因夢阿彌陀佛與之說法。",
        "from": "T47n1970_008:0278a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後聰辯過人。",
        "from": "T47n1970_008:0278a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祥瑞不一。",
        "from": "T47n1970_008:0278a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出往生傳。",
        "from": "T47n1970_008:0278a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛治病得愈",
        "from": "T47n1970_008:0278a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近年秀州一僧常念阿彌陀佛。",
        "from": "T47n1970_008:0278a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人治病。",
        "from": "T47n1970_008:0278a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有病者請往常得痊愈。",
        "from": "T47n1970_008:0278a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秀州人皆能言之。",
        "from": "T47n1970_008:0278a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛孫兒免難",
        "from": "T47n1970_008:0278a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予鄉村落間有一老人。",
        "from": "T47n1970_008:0278a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每有事。",
        "from": "T47n1970_008:0278a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必合掌至額。",
        "from": "T47n1970_008:0278a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念阿彌陀佛。",
        "from": "T47n1970_008:0278a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其孫兒方二三歲。",
        "from": "T47n1970_008:0278a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因隨母至田野。",
        "from": "T47n1970_008:0278a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽失之。",
        "from": "T47n1970_008:0278a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老人尋訪不見。",
        "from": "T47n1970_008:0278a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後數日人告之云。",
        "from": "T47n1970_008:0278a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在溪外。",
        "from": "T47n1970_008:0278a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果尋得之。",
        "from": "T47n1970_008:0278a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見足跡。",
        "from": "T47n1970_008:0278a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍於灘上。",
        "from": "T47n1970_008:0278a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其溪甚深。",
        "from": "T47n1970_008:0278a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知此兒何緣過。",
        "from": "T47n1970_008:0278a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼又久而無恙。",
        "from": "T47n1970_008:0278a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人以為其祖至誠阿彌陀佛所感也。",
        "from": "T47n1970_008:0278a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍舒增廣淨土文卷第八(終)",
        "from": "T47n1970_008:0278a15_0",
        "context_with_next_sentence": false
    }
]