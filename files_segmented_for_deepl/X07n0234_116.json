[
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百一十六(入第七十七經下半)清涼山沙門　澄觀　述晉水沙門　(淨源)　錄疏注經△自下大文第三。",
        "from": "X07n0234_116:0930c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏一人明攝德成因相。",
        "from": "X07n0234_116:0930c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前既會緣入實。",
        "from": "X07n0234_116:0930c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定堪成佛故。",
        "from": "X07n0234_116:0930c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今辨其一生補處成因之義。",
        "from": "X07n0234_116:0930c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文唯五段。",
        "from": "X07n0234_116:0930c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以補處位極。",
        "from": "X07n0234_116:0930c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故闕謙推。",
        "from": "X07n0234_116:0930c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初依教趣求二。",
        "from": "X07n0234_116:0930c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標念前趣後。",
        "from": "X07n0234_116:0930c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子(至)正念思惟諸菩薩行向海岸國。",
        "from": "X07n0234_116:0930c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別生勝念。",
        "from": "X07n0234_116:0930c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悔往修來。",
        "from": "X07n0234_116:0930c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文四。",
        "from": "X07n0234_116:0930c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初觀昔非。",
        "from": "X07n0234_116:0930c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以行對治。",
        "from": "X07n0234_116:0930c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自憶往世不修禮敬(至)如是思惟生大歡喜。",
        "from": "X07n0234_116:0930c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二觀其現苦。",
        "from": "X07n0234_116:0930c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "策進當善。",
        "from": "X07n0234_116:0930c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀此身是生老病死(至)菩薩願智身而作因緣。",
        "from": "X07n0234_116:0930c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸修行者。",
        "from": "X07n0234_116:0930c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願審此倣之。",
        "from": "X07n0234_116:0930c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三明觀念之益。",
        "from": "X07n0234_116:0930c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益其勝觀。",
        "from": "X07n0234_116:0930c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是念時長不思議(至)三世平等無有休息。",
        "from": "X07n0234_116:0930c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四結益所屬。",
        "from": "X07n0234_116:0930c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切皆以信受善知識教之所致耳。",
        "from": "X07n0234_116:0930c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二見敬諮問二。",
        "from": "X07n0234_116:0930c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初見敬二。",
        "from": "X07n0234_116:0930c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先見依二。",
        "from": "X07n0234_116:0930c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初入定申敬三。",
        "from": "X07n0234_116:0930c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初結前標後。",
        "from": "X07n0234_116:0930c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財童子以如是尊重(至)大樓閣前五體投地。",
        "from": "X07n0234_116:0930c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可知。",
        "from": "X07n0234_116:0931a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫時斂念。",
        "from": "X07n0234_116:0931a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標定。",
        "from": "X07n0234_116:0931a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟觀察。",
        "from": "X07n0234_116:0931a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定加行。",
        "from": "X07n0234_116:0931a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以深信解大願力故。",
        "from": "X07n0234_116:0931a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是定之因。",
        "from": "X07n0234_116:0931a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入徧一切處智慧身平等門。",
        "from": "X07n0234_116:0931a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨定名相。",
        "from": "X07n0234_116:0931a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別顯定用。",
        "from": "X07n0234_116:0931a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即雙運定慧。",
        "from": "X07n0234_116:0931a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中二。",
        "from": "X07n0234_116:0931a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明即智定之妙用二。",
        "from": "X07n0234_116:0931a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初羅身雲於法界。",
        "from": "X07n0234_116:0931a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普現其身在於一切如來前(至)盡未來際無有休息。",
        "from": "X07n0234_116:0931a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二契法性之真源。",
        "from": "X07n0234_116:0931a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等虗空無邊量故(至)無有性隨緣轉故。",
        "from": "X07n0234_116:0931a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二稱法界之深觀。",
        "from": "X07n0234_116:0931a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有三。",
        "from": "X07n0234_116:0931a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初了法從緣。",
        "from": "X07n0234_116:0931a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次智契無性。",
        "from": "X07n0234_116:0931a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後會歸中道。",
        "from": "X07n0234_116:0931a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三無礙。",
        "from": "X07n0234_116:0931a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即三觀一心。",
        "from": "X07n0234_116:0931a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今初了法從緣。",
        "from": "X07n0234_116:0931a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又決定知一切諸法皆從業起。",
        "from": "X07n0234_116:0931a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報詶善惡。",
        "from": "X07n0234_116:0931a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云業起。",
        "from": "X07n0234_116:0931a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸果皆從因起。",
        "from": "X07n0234_116:0931a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果自種生。",
        "from": "X07n0234_116:0931a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云從因起。",
        "from": "X07n0234_116:0931a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸業皆從習起一切佛興皆從信起。",
        "from": "X07n0234_116:0931a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自修成佛。",
        "from": "X07n0234_116:0931a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信為道源。",
        "from": "X07n0234_116:0931a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切化現諸供養事(至)一切化佛從敬心起。",
        "from": "X07n0234_116:0931a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感他化身。",
        "from": "X07n0234_116:0931a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬心便現。",
        "from": "X07n0234_116:0931a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛法從善根起(至)從一切智境界而起。",
        "from": "X07n0234_116:0931b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二智契無性。",
        "from": "X07n0234_116:0931b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離於斷見知迴向故(至)離顛倒見知如實理故。",
        "from": "X07n0234_116:0931b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離顛倒見者。",
        "from": "X07n0234_116:0931b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通三四倒。",
        "from": "X07n0234_116:0931b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倒謂常計無常。",
        "from": "X07n0234_116:0931b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名顛倒。",
        "from": "X07n0234_116:0931b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見於實理。",
        "from": "X07n0234_116:0931b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無斯倒。",
        "from": "X07n0234_116:0931b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以無常為常。",
        "from": "X07n0234_116:0931b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非見如實理。",
        "from": "X07n0234_116:0931b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以壞相故。",
        "from": "X07n0234_116:0931b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離自在見知不由他故。",
        "from": "X07n0234_116:0931b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂自在天能生萬物。",
        "from": "X07n0234_116:0931b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知由自業。",
        "from": "X07n0234_116:0931b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不由他。",
        "from": "X07n0234_116:0931b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離自他見知從緣起故。",
        "from": "X07n0234_116:0931b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "單執自他。",
        "from": "X07n0234_116:0931b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則乖緣起。",
        "from": "X07n0234_116:0931b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離邊執見知法界無邊故。",
        "from": "X07n0234_116:0931b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅執生死等。",
        "from": "X07n0234_116:0931b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有始末故。",
        "from": "X07n0234_116:0931b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離往來見知如影像故離有無見知不生滅故。",
        "from": "X07n0234_116:0931b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無之有。",
        "from": "X07n0234_116:0931b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之為生。",
        "from": "X07n0234_116:0931b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自有之無。",
        "from": "X07n0234_116:0931b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱之為滅。",
        "from": "X07n0234_116:0931b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體無生滅。",
        "from": "X07n0234_116:0931b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何得有無。",
        "from": "X07n0234_116:0931b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離一切法見知空無生故。",
        "from": "X07n0234_116:0931b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約理遣法。",
        "from": "X07n0234_116:0931b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知不自在故。",
        "from": "X07n0234_116:0931b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約緣遣法。",
        "from": "X07n0234_116:0931b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知願力出生故。",
        "from": "X07n0234_116:0931b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約因遣法。",
        "from": "X07n0234_116:0931b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離一切相見入無相際故。",
        "from": "X07n0234_116:0931b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三會歸中道。",
        "from": "X07n0234_116:0931b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知一切法如種生芽故。",
        "from": "X07n0234_116:0931b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然隨一句。",
        "from": "X07n0234_116:0931c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆離上諸過。",
        "from": "X07n0234_116:0931c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今且通說。",
        "from": "X07n0234_116:0931c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如種生芽者。",
        "from": "X07n0234_116:0931c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從水土等緣生故非無。",
        "from": "X07n0234_116:0931c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此如初段觀緣生。",
        "from": "X07n0234_116:0931c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無性故非有。",
        "from": "X07n0234_116:0931c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如第二段非有非無。",
        "from": "X07n0234_116:0931c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是中道。",
        "from": "X07n0234_116:0931c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是離斷常等。",
        "from": "X07n0234_116:0931c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以思準。",
        "from": "X07n0234_116:0931c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種芽橫喻萬法。",
        "from": "X07n0234_116:0931c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如印生文故。",
        "from": "X07n0234_116:0931c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即豎喻諸法。",
        "from": "X07n0234_116:0931c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃云。",
        "from": "X07n0234_116:0931c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陰亦滅。",
        "from": "X07n0234_116:0931c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼陰續生。",
        "from": "X07n0234_116:0931c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蠟印印泥。",
        "from": "X07n0234_116:0931c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印壞文成等。",
        "from": "X07n0234_116:0931c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已下諸句。",
        "from": "X07n0234_116:0931c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通於橫豎。",
        "from": "X07n0234_116:0931c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知質如像故知聲如響故(至)了世心現故。",
        "from": "X07n0234_116:0931c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了世心現。",
        "from": "X07n0234_116:0931c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦唯心觀。",
        "from": "X07n0234_116:0931c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心為緣。",
        "from": "X07n0234_116:0931c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現而無性。",
        "from": "X07n0234_116:0931c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即中道觀。",
        "from": "X07n0234_116:0931c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了果因起故了報業集故(至)善巧方便所流出故。",
        "from": "X07n0234_116:0931c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三總結成益。",
        "from": "X07n0234_116:0931c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財童子入如是智(至)流注身心清涼悅澤。",
        "from": "X07n0234_116:0931c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二善財出定。",
        "from": "X07n0234_116:0931c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業敬讚。",
        "from": "X07n0234_116:0931c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文三。",
        "from": "X07n0234_116:0931c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初以身敬繞。",
        "from": "X07n0234_116:0931c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從地而起一心瞻仰目不暫捨合掌圍繞經無量帀。",
        "from": "X07n0234_116:0931c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二以心敬念十。",
        "from": "X07n0234_116:0931c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初約境顯勝。",
        "from": "X07n0234_116:0931c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是念言此大樓閣是解空無相無我者之所住處。",
        "from": "X07n0234_116:0931c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此諸句一一皆舉能住者德。",
        "from": "X07n0234_116:0931c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎所住樓閣。",
        "from": "X07n0234_116:0931c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初句具顯故。",
        "from": "X07n0234_116:0931c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大樓閣之言。",
        "from": "X07n0234_116:0931c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貫通諸句。",
        "from": "X07n0234_116:0931c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是於一切法無分別者(至)一切道者之所住處。",
        "from": "X07n0234_116:0931c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二約德顯妙。",
        "from": "X07n0234_116:0931c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是入一切甚深般若(至)一切如來所者之所住處。",
        "from": "X07n0234_116:0931c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三約用顯自在。",
        "from": "X07n0234_116:0931c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以一劫入一切劫(至)一切國土者之所住處。",
        "from": "X07n0234_116:0931c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四約行顯勝。",
        "from": "X07n0234_116:0932a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是於一切眾生前(至)演說難遭遇法者之所住處。",
        "from": "X07n0234_116:0932a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五約觀顯深。",
        "from": "X07n0234_116:0932a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是能住難知法甚深法(至)無戲論法者之所住處。",
        "from": "X07n0234_116:0932a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六約對治顯勝。",
        "from": "X07n0234_116:0932a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是住大慈大悲者(至)亦不與癡惑俱者之所住處。",
        "from": "X07n0234_116:0932a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七約止觀明自在。",
        "from": "X07n0234_116:0932a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是雖住四禪而不隨禪生(至)菩提行願者之所住處。",
        "from": "X07n0234_116:0932a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八約利他行顯勝。",
        "from": "X07n0234_116:0932a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是雖於一切業煩惱中(至)利益他事者之所住處。",
        "from": "X07n0234_116:0932a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△九約護小乘行明自在。",
        "from": "X07n0234_116:0932a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是雖行九次第定(至)雖說一切乘而不捨大乘。",
        "from": "X07n0234_116:0932a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△十結德所住。",
        "from": "X07n0234_116:0932a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大樓閣是住如是等一切諸功德者之所住處。",
        "from": "X07n0234_116:0932a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前九中。",
        "from": "X07n0234_116:0932a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除初二及五。",
        "from": "X07n0234_116:0932a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘皆約權實事理雙行。",
        "from": "X07n0234_116:0932a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二以言敬讚。",
        "from": "X07n0234_116:0932a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十五偈。",
        "from": "X07n0234_116:0932a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分二。",
        "from": "X07n0234_116:0932a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前三十四偈七言舉德歎處。",
        "from": "X07n0234_116:0932a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後二十一偈五言指處明德。",
        "from": "X07n0234_116:0932a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前中又二。",
        "from": "X07n0234_116:0932a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初二總歎。",
        "from": "X07n0234_116:0932a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子而說頌言(至)此無等者之住處。",
        "from": "X07n0234_116:0932a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一約行位。",
        "from": "X07n0234_116:0932a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一約名德。",
        "from": "X07n0234_116:0932a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二餘偈別約德行四。",
        "from": "X07n0234_116:0932a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初約自利行勝。",
        "from": "X07n0234_116:0932a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施戒忍進禪智慧(至)此無依者之住處。",
        "from": "X07n0234_116:0932a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有十偈。",
        "from": "X07n0234_116:0932a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎利他行勝。",
        "from": "X07n0234_116:0932a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普見惡道羣生類(至)此堅固意之住處。",
        "from": "X07n0234_116:0932a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有八偈。",
        "from": "X07n0234_116:0932b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎功德勝。",
        "from": "X07n0234_116:0932b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛所說法(至)此修行者之住處。",
        "from": "X07n0234_116:0932b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有七偈。",
        "from": "X07n0234_116:0932b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎方便勝。",
        "from": "X07n0234_116:0932b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就神通方便智(至)此悲愍者之住處。",
        "from": "X07n0234_116:0932b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二指處明德。",
        "from": "X07n0234_116:0932b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復語依。",
        "from": "X07n0234_116:0932b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意在歎正。",
        "from": "X07n0234_116:0932b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有六。",
        "from": "X07n0234_116:0932b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初下化。",
        "from": "X07n0234_116:0932b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子住於此普現眾生前(至)充滿十方剎。",
        "from": "X07n0234_116:0932b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二上觀。",
        "from": "X07n0234_116:0932b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子住於此徧游諸世界(至)其心無厭倦。",
        "from": "X07n0234_116:0932b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有五偈。",
        "from": "X07n0234_116:0932b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明三昧自在。",
        "from": "X07n0234_116:0932b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子住於此念念入三昧(至)一切諸趣中。",
        "from": "X07n0234_116:0932b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有七偈。",
        "from": "X07n0234_116:0932b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧深廣。",
        "from": "X07n0234_116:0932b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子住於此飲諸佛法海(至)無起無所有。",
        "from": "X07n0234_116:0932b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五有一偈。",
        "from": "X07n0234_116:0932b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯其平等。",
        "from": "X07n0234_116:0932b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察眾生等法等如來等剎等諸願等三世悉平等。",
        "from": "X07n0234_116:0932b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六有四偈。",
        "from": "X07n0234_116:0932b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結德申敬。",
        "from": "X07n0234_116:0932b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求哀請加。",
        "from": "X07n0234_116:0932b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子住於此教化諸羣生(至)願垂顧念我。",
        "from": "X07n0234_116:0932b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二見正報。",
        "from": "X07n0234_116:0932b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_116:0932b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初見二。",
        "from": "X07n0234_116:0932b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初翹心願覩。",
        "from": "X07n0234_116:0932b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子(至)願見彌勒菩薩親近供養。",
        "from": "X07n0234_116:0932b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正覩慈尊。",
        "from": "X07n0234_116:0932b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃見彌勒菩薩摩訶薩從別處來。",
        "from": "X07n0234_116:0932b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言別處來者。",
        "from": "X07n0234_116:0932b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝化就機故。",
        "from": "X07n0234_116:0932b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還來歸本故。",
        "from": "X07n0234_116:0932b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦顯慈氏應念而至。",
        "from": "X07n0234_116:0932b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著處故。",
        "from": "X07n0234_116:0932b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量天龍夜叉(至)而共來向莊嚴藏大樓觀所。",
        "from": "X07n0234_116:0932b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明設敬儀五。",
        "from": "X07n0234_116:0932c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初身心禮敬。",
        "from": "X07n0234_116:0932c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財見已歡喜踊躍五體投地。",
        "from": "X07n0234_116:0932c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二讚德記別。",
        "from": "X07n0234_116:0932c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_116:0932c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初長行。",
        "from": "X07n0234_116:0932c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彌勒菩薩觀察善財指示大眾歎其功德。",
        "from": "X07n0234_116:0932c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指示者。",
        "from": "X07n0234_116:0932c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令眾同覩。",
        "from": "X07n0234_116:0932c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倣而行故。",
        "from": "X07n0234_116:0932c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二偈正讚。",
        "from": "X07n0234_116:0932c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一百一十三頌。",
        "from": "X07n0234_116:0932c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分三。",
        "from": "X07n0234_116:0932c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初指眾總歎。",
        "from": "X07n0234_116:0932c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說頌曰汝等觀善財(至)而來至我所。",
        "from": "X07n0234_116:0932c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別歎勝德三。",
        "from": "X07n0234_116:0932c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初二十二偈直對善財歎。",
        "from": "X07n0234_116:0932c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中亦三。",
        "from": "X07n0234_116:0932c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初有九偈。",
        "from": "X07n0234_116:0932c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚德善來。",
        "from": "X07n0234_116:0932c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善來圓滿慈善來清淨悲(至)修行不疲厭。",
        "from": "X07n0234_116:0932c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有二偈。",
        "from": "X07n0234_116:0932c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明來因緣。",
        "from": "X07n0234_116:0932c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊德雲等一切諸佛子(至)今來至我所。",
        "from": "X07n0234_116:0932c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以外由善友。",
        "from": "X07n0234_116:0932c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內具德行。",
        "from": "X07n0234_116:0932c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三明來所為。",
        "from": "X07n0234_116:0932c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求諸如來清淨之境界(至)而來至我所。",
        "from": "X07n0234_116:0932c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二對眾令觀讚五。",
        "from": "X07n0234_116:0932c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初四偈總讚。",
        "from": "X07n0234_116:0932c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等觀此人親近善知識(至)受諸勝果報。",
        "from": "X07n0234_116:0932c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有四偈。",
        "from": "X07n0234_116:0932c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚其即智之悲。",
        "from": "X07n0234_116:0932c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財見眾生生老病死苦(至)示其安隱處。",
        "from": "X07n0234_116:0932c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有七偈。",
        "from": "X07n0234_116:0932c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎其即悲之智。",
        "from": "X07n0234_116:0932c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍鎧解脫乘智慧為利劒(至)滅除三毒暗。",
        "from": "X07n0234_116:0932c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾焰者。",
        "from": "X07n0234_116:0932c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云所知。",
        "from": "X07n0234_116:0932c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大乘論云。",
        "from": "X07n0234_116:0932c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾焰地者。",
        "from": "X07n0234_116:0932c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是第十地。",
        "from": "X07n0234_116:0932c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此約盡斷十種所知障故。",
        "from": "X07n0234_116:0932c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有六偈。",
        "from": "X07n0234_116:0932c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總歎諸德。",
        "from": "X07n0234_116:0932c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺心迦羅邏悲胞慈為肉(至)專求善知識。",
        "from": "X07n0234_116:0932c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦羅邏即揭蘿藍。",
        "from": "X07n0234_116:0933a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵音輕重。",
        "from": "X07n0234_116:0933a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△後五偈讚妙果當成。",
        "from": "X07n0234_116:0933a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當滅諸惡道當示人天路(至)其心大歡喜。",
        "from": "X07n0234_116:0933a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三重對善財讚五。",
        "from": "X07n0234_116:0933a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初讚其當果德二。",
        "from": "X07n0234_116:0933a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總。",
        "from": "X07n0234_116:0933a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝行極調柔汝心甚清淨(至)成就大菩提。",
        "from": "X07n0234_116:0933a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別。",
        "from": "X07n0234_116:0933a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當滿諸行海當知諸法海(至)心生大歡喜。",
        "from": "X07n0234_116:0933a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有七偈。",
        "from": "X07n0234_116:0933a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙歎當現德。",
        "from": "X07n0234_116:0933a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於諸法門已得及當得(至)應生大欣慶。",
        "from": "X07n0234_116:0933a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有八偈。",
        "from": "X07n0234_116:0933a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚其遇友德。",
        "from": "X07n0234_116:0933a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根不懈倦志願恒決定(至)善哉住壽命。",
        "from": "X07n0234_116:0933a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有五偈。",
        "from": "X07n0234_116:0933a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎速成位行德。",
        "from": "X07n0234_116:0933a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已生菩薩家已具菩薩德(至)亦當如是學。",
        "from": "X07n0234_116:0933a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五有十七偈。",
        "from": "X07n0234_116:0933a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總明諸德。",
        "from": "X07n0234_116:0933a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結歎令欣。",
        "from": "X07n0234_116:0933a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切功德行皆從願欲生(至)到佛功德岸。",
        "from": "X07n0234_116:0933a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有一偈。",
        "from": "X07n0234_116:0933a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略示後友。",
        "from": "X07n0234_116:0933a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當往大智文殊師利所彼當令汝得普賢深妙行。",
        "from": "X07n0234_116:0933a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三重申敬儀三。",
        "from": "X07n0234_116:0933a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初辨敬因。",
        "from": "X07n0234_116:0933a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞讚德故。",
        "from": "X07n0234_116:0933a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彌勒菩薩摩訶薩(至)稱讚善財大功德藏。",
        "from": "X07n0234_116:0933a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二身心悲敬。",
        "from": "X07n0234_116:0933a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財聞已歡喜踊躍(至)恭敬瞻仰繞無量帀。",
        "from": "X07n0234_116:0933a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三華供展誠。",
        "from": "X07n0234_116:0933a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以文殊師利心念力故。",
        "from": "X07n0234_116:0933a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表由信智。",
        "from": "X07n0234_116:0933a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾華瓔珞。",
        "from": "X07n0234_116:0933a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華因德立瓔珞行成。",
        "from": "X07n0234_116:0933b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種妙寶不覺忽然自盈其手。",
        "from": "X07n0234_116:0933b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信智滿故。",
        "from": "X07n0234_116:0933b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財歡喜即以奉散彌勒菩薩摩訶薩上。",
        "from": "X07n0234_116:0933b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝成因故。",
        "from": "X07n0234_116:0933b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦當果故。",
        "from": "X07n0234_116:0933b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四再讚再說。",
        "from": "X07n0234_116:0933b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彌勒菩薩摩善財頂為說頌言。",
        "from": "X07n0234_116:0933b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉真佛子(至)獨如文殊及與我。",
        "from": "X07n0234_116:0933b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五慶遇念恩。",
        "from": "X07n0234_116:0933b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子以頌答曰我念善知識(至)願速還瞻覲。",
        "from": "X07n0234_116:0933b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百一十六",
        "from": "X07n0234_116:0933b11_0",
        "context_with_next_sentence": false
    }
]