[
    {
        "source_sentence": "修西聞見錄卷二",
        "from": "X78n1552_002:0398c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東土　雞園偶　集",
        "from": "X78n1552_002:0398c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量海尼傳稿蔣元亮",
        "from": "X78n1552_002:0398c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往常與玉尺家居。",
        "from": "X78n1552_002:0398c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "考訂淨土文字。",
        "from": "X78n1552_002:0398c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾中獨少尼之著作。",
        "from": "X78n1552_002:0398c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊謂天地清淑之氣。",
        "from": "X78n1552_002:0398c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不以類而有所輕重於其間。",
        "from": "X78n1552_002:0398c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況方以類聚。",
        "from": "X78n1552_002:0398c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則同類之身。",
        "from": "X78n1552_002:0398c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必引同類。",
        "from": "X78n1552_002:0398c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈但有身教而無言教者乎。",
        "from": "X78n1552_002:0398c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉尺既出家。",
        "from": "X78n1552_002:0398c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謀刻藏經。",
        "from": "X78n1552_002:0398c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來吳越之地。",
        "from": "X78n1552_002:0398c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃獲見影響集於古明姚上善之手。",
        "from": "X78n1552_002:0398c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中著作。",
        "from": "X78n1552_002:0398c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述淨行者多。",
        "from": "X78n1552_002:0398c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢比丘尼量海之筆也。",
        "from": "X78n1552_002:0398c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既與同人酌訂吳門四眾弟子詩。",
        "from": "X78n1552_002:0398c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以影響集入焉。",
        "from": "X78n1552_002:0398c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而淨土之人文小備。",
        "from": "X78n1552_002:0398c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘅爾嘆曰。",
        "from": "X78n1552_002:0398c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人何必相逢相遇。",
        "from": "X78n1552_002:0398c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃為淨土知音乎。",
        "from": "X78n1552_002:0398c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如李素真冒其孝鍾培棟熊秉忠陳鴻謨乘戒量海諸上善。",
        "from": "X78n1552_002:0399a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆未有一面之緣。",
        "from": "X78n1552_002:0399a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而精神如不隔。",
        "from": "X78n1552_002:0399a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其在左右者。",
        "from": "X78n1552_002:0399a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或數年而合離之感。",
        "from": "X78n1552_002:0399a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往往於心境遇之。",
        "from": "X78n1552_002:0399a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如文明周國定甘雲開陳靈復茅慧雲蔣慧生之輩。",
        "from": "X78n1552_002:0399a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中變化。",
        "from": "X78n1552_002:0399a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得其端倪。",
        "from": "X78n1552_002:0399a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則此世他生之成就。",
        "from": "X78n1552_002:0399a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能不令人思且望耶。",
        "from": "X78n1552_002:0399a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量海。",
        "from": "X78n1552_002:0399a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒定夙根。",
        "from": "X78n1552_002:0399a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧心初裕。",
        "from": "X78n1552_002:0399a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上品之資也。",
        "from": "X78n1552_002:0399a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其集中尼戒一篇。",
        "from": "X78n1552_002:0399a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尤見東土大乘氣象。",
        "from": "X78n1552_002:0399a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣元哀詞(泰州)冒同慶",
        "from": "X78n1552_002:0399a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當全藏之未刻也。",
        "from": "X78n1552_002:0399a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有以種種放生念佛之書募刻者。",
        "from": "X78n1552_002:0399a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖非大宗。",
        "from": "X78n1552_002:0399a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦火之前相也。",
        "from": "X78n1552_002:0399a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而廣元輒先赴之。",
        "from": "X78n1552_002:0399a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元。",
        "from": "X78n1552_002:0399a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泰州南門外某庵尼。",
        "from": "X78n1552_002:0399a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年既老矣。",
        "from": "X78n1552_002:0399a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而志不衰。",
        "from": "X78n1552_002:0399a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉尺兄弟在泰久。",
        "from": "X78n1552_002:0399a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與廣元有刊刻龍舒文之願。",
        "from": "X78n1552_002:0399a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言既成。",
        "from": "X78n1552_002:0399a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元已卒。",
        "from": "X78n1552_002:0399a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢含此淨因以往矣。",
        "from": "X78n1552_002:0399a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉尺出俗時。",
        "from": "X78n1552_002:0399a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行過某菴。",
        "from": "X78n1552_002:0399a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而元已無踪跡。",
        "from": "X78n1552_002:0399a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人言。",
        "from": "X78n1552_002:0399a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此處尚有信心人。",
        "from": "X78n1552_002:0399a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可續募小緣以助刻資。",
        "from": "X78n1552_002:0399a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉尺事多。",
        "from": "X78n1552_002:0399a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故未往。",
        "from": "X78n1552_002:0399a15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然心心憶之。",
        "from": "X78n1552_002:0399a15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同慶。",
        "from": "X78n1552_002:0399a15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邑人也。",
        "from": "X78n1552_002:0399a15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為作哀詞示後學。",
        "from": "X78n1552_002:0399a15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詞曰。",
        "from": "X78n1552_002:0399a16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　光華冷淡　　閴無人兮　　宿草蕪生　　塔影淪兮　法幢盈空　　唯一真兮　　蓮花部主　　慰汝神兮量海軼事(蘇州)姚古明量海。",
        "from": "X78n1552_002:0399a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "避兵有惡疾。",
        "from": "X78n1552_002:0399a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人曰。",
        "from": "X78n1552_002:0399a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既是大修行人。",
        "from": "X78n1552_002:0399a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故有此惡疾。",
        "from": "X78n1552_002:0399a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X78n1552_002:0399a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一一波羅蜜。",
        "from": "X78n1552_002:0399a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非汝所知也。",
        "from": "X78n1552_002:0399a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨終時。",
        "from": "X78n1552_002:0399a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹夜呼余名。",
        "from": "X78n1552_002:0399a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既卒。",
        "from": "X78n1552_002:0399a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人以告余。",
        "from": "X78n1552_002:0399a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余曰。",
        "from": "X78n1552_002:0399a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此時真喫緊。",
        "from": "X78n1552_002:0399a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛未遑。",
        "from": "X78n1552_002:0399a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈遑念我。",
        "from": "X78n1552_002:0399a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶念出家之切胡鏡之",
        "from": "X78n1552_002:0399a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶念。",
        "from": "X78n1552_002:0399b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江蘇候補縣王君蔭福女。",
        "from": "X78n1552_002:0399b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母早卒。",
        "from": "X78n1552_002:0399b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨父署縣任中。",
        "from": "X78n1552_002:0399b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日請父欲有所言。",
        "from": "X78n1552_002:0399b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父命之至。",
        "from": "X78n1552_002:0399b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以終身事父為言。",
        "from": "X78n1552_002:0399b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父許之。",
        "from": "X78n1552_002:0399b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久而移寓泰州。",
        "from": "X78n1552_002:0399b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父請刻經僧為說菩薩戒。",
        "from": "X78n1552_002:0399b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并請書鏡影鐘聲以示之。",
        "from": "X78n1552_002:0399b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稍有所明。",
        "from": "X78n1552_002:0399b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未徹也。",
        "from": "X78n1552_002:0399b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又隨父至江寧寓。",
        "from": "X78n1552_002:0399b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂至接引菴。",
        "from": "X78n1552_002:0399b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家志甚切。",
        "from": "X78n1552_002:0399b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其年之冬。",
        "from": "X78n1552_002:0399b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙禮刻經僧。",
        "from": "X78n1552_002:0399b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "削髮出家。",
        "from": "X78n1552_002:0399b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久遂卒。",
        "from": "X78n1552_002:0399b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刻經僧為訂出家名字。",
        "from": "X78n1552_002:0399b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未及知也。",
        "from": "X78n1552_002:0399b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其勇於脫塵。",
        "from": "X78n1552_002:0399b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而疎於覓法。",
        "from": "X78n1552_002:0399b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢入佛未深之故耶。",
        "from": "X78n1552_002:0399b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其迅速精進以自全其天。",
        "from": "X78n1552_002:0399b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則亦可以諷世之為修行而終身不決者。",
        "from": "X78n1552_002:0399b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈義傳(金陵)朱　生",
        "from": "X78n1552_002:0399b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈義。",
        "from": "X78n1552_002:0399b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江寧馬氏女二順也。",
        "from": "X78n1552_002:0399b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十餘。",
        "from": "X78n1552_002:0399b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見玉尺。",
        "from": "X78n1552_002:0399b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傾心受教。",
        "from": "X78n1552_002:0399b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性警敏。",
        "from": "X78n1552_002:0399b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能解大意。",
        "from": "X78n1552_002:0399b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而病。",
        "from": "X78n1552_002:0399b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲見玉尺不可得。",
        "from": "X78n1552_002:0399b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命作書請玉尺渡江。",
        "from": "X78n1552_002:0399b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家人誑之。",
        "from": "X78n1552_002:0399b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以信達也。",
        "from": "X78n1552_002:0399b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉尺有他事致書金陵弟子。",
        "from": "X78n1552_002:0399b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈義忽謂母。",
        "from": "X78n1552_002:0399b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師有信到。",
        "from": "X78n1552_002:0399b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不探之。",
        "from": "X78n1552_002:0399b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精誠通感如此。",
        "from": "X78n1552_002:0399b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂哀矣。",
        "from": "X78n1552_002:0399b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "養病於藥師菴。",
        "from": "X78n1552_002:0399b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "待玉尺不至。",
        "from": "X78n1552_002:0399b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自知期迫。",
        "from": "X78n1552_002:0399b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對佛落髮為沙彌尼。",
        "from": "X78n1552_002:0399b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉尺久而渡江。",
        "from": "X78n1552_002:0399b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知其事。",
        "from": "X78n1552_002:0399b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訪其處。",
        "from": "X78n1552_002:0399b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太息久之。",
        "from": "X78n1552_002:0399b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祝其魂魄。",
        "from": "X78n1552_002:0399b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祀之於海天精舍。",
        "from": "X78n1552_002:0399b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追說菩薩戒。",
        "from": "X78n1552_002:0399b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱之曰菩薩沙彌尼。",
        "from": "X78n1552_002:0399b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈義雖苦於病魔。",
        "from": "X78n1552_002:0399b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然心光朗然。",
        "from": "X78n1552_002:0399b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至死不變。",
        "from": "X78n1552_002:0399b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其不隔於無量光。",
        "from": "X78n1552_002:0399b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢可知矣。",
        "from": "X78n1552_002:0399b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶進進字說石　麟",
        "from": "X78n1552_002:0399b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶進之遇人不淑而知退也。",
        "from": "X78n1552_002:0399b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必進於道矣。",
        "from": "X78n1552_002:0399b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既志於道而未得所依止也。",
        "from": "X78n1552_002:0399b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進必化為退。",
        "from": "X78n1552_002:0399b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然退於一處。",
        "from": "X78n1552_002:0399b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非退於處處。",
        "from": "X78n1552_002:0399b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其進猶存也。",
        "from": "X78n1552_002:0399b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇於義。",
        "from": "X78n1552_002:0399b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自願效力花嚴。",
        "from": "X78n1552_002:0399b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處移而心減。",
        "from": "X78n1552_002:0399b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不亦退乎。",
        "from": "X78n1552_002:0399b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然大退者數人。",
        "from": "X78n1552_002:0399b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼勉力以完其半願。",
        "from": "X78n1552_002:0399b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而周旋於玉尺之前。",
        "from": "X78n1552_002:0399c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而退中之進象也。",
        "from": "X78n1552_002:0399c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於得地安居。",
        "from": "X78n1552_002:0399c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "披衣削髮。",
        "from": "X78n1552_002:0399c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而格於心境。",
        "from": "X78n1552_002:0399c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復與善知識輪誠意而寫天真。",
        "from": "X78n1552_002:0399c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真進之機何在乎。",
        "from": "X78n1552_002:0399c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶也幾何。",
        "from": "X78n1552_002:0399c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可弔也。",
        "from": "X78n1552_002:0399c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與其進也。",
        "from": "X78n1552_002:0399c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噫。",
        "from": "X78n1552_002:0399c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能持事略(紹興)慧　音",
        "from": "X78n1552_002:0399c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杭州太平橋葉菴住持尼名能持。",
        "from": "X78n1552_002:0399c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年六十九。",
        "from": "X78n1552_002:0399c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "己卯七月二十九。",
        "from": "X78n1552_002:0399c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自知時至。",
        "from": "X78n1552_002:0399c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集眾念佛。",
        "from": "X78n1552_002:0399c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐而逝。",
        "from": "X78n1552_002:0399c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面目熈怡。",
        "from": "X78n1552_002:0399c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方炎暑。",
        "from": "X78n1552_002:0399c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次日封龕。",
        "from": "X78n1552_002:0399c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形色如生。",
        "from": "X78n1552_002:0399c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛蠅不犯其几筵。",
        "from": "X78n1552_002:0399c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真淨業所感也。",
        "from": "X78n1552_002:0399c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杭州近日比丘尼中。",
        "from": "X78n1552_002:0399c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以穆菴慧師葉菴持師。",
        "from": "X78n1552_002:0399c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為名望最著者(杭之客尼蓮化。",
        "from": "X78n1552_002:0399c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病歸。",
        "from": "X78n1552_002:0399c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒於無錫舟次。",
        "from": "X78n1552_002:0399c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人甚懇切。",
        "from": "X78n1552_002:0399c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但慧解不起耳。",
        "from": "X78n1552_002:0399c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁華每提醒之。",
        "from": "X78n1552_002:0399c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶未甚得力。",
        "from": "X78n1552_002:0399c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜哉。",
        "from": "X78n1552_002:0399c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁華。",
        "from": "X78n1552_002:0399c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦江南尼眾之傑出者)。",
        "from": "X78n1552_002:0399c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明恒傳德　修",
        "from": "X78n1552_002:0399c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明恒。",
        "from": "X78n1552_002:0399c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先為優婆夷。",
        "from": "X78n1552_002:0399c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住寧波鄉之青蓮菴。",
        "from": "X78n1552_002:0399c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專修淨土。",
        "from": "X78n1552_002:0399c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因病。",
        "from": "X78n1552_002:0399c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂薙髮。",
        "from": "X78n1552_002:0399c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念淨土堂未曾完工。",
        "from": "X78n1552_002:0399c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病中每抱憾。",
        "from": "X78n1552_002:0399c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有妙理法師者。",
        "from": "X78n1552_002:0399c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示之曰。",
        "from": "X78n1552_002:0399c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世事未了。",
        "from": "X78n1552_002:0399c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人替汝。",
        "from": "X78n1552_002:0399c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死事未了。",
        "from": "X78n1552_002:0399c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無人替汝。",
        "from": "X78n1552_002:0399c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今宜收下。",
        "from": "X78n1552_002:0399c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心歸命矣。",
        "from": "X78n1552_002:0399c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有式教大師者。",
        "from": "X78n1552_002:0399c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦時來警策。",
        "from": "X78n1552_002:0399c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂默受善誡。",
        "from": "X78n1552_002:0399c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄想芟除。",
        "from": "X78n1552_002:0399c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日晨朝。",
        "from": "X78n1552_002:0399c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽謂大眾曰。",
        "from": "X78n1552_002:0399c17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日巳時可行。",
        "from": "X78n1552_002:0399c18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或問曰。",
        "from": "X78n1552_002:0399c18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巳時向那里行。",
        "from": "X78n1552_002:0399c18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X78n1552_002:0399c18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝豈不知西行。",
        "from": "X78n1552_002:0399c18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至巳刻。",
        "from": "X78n1552_002:0399c19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果安然坐化。",
        "from": "X78n1552_002:0399c19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "X78n1552_002:0399c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知識之恩。",
        "from": "X78n1552_002:0399c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大於父母。",
        "from": "X78n1552_002:0399c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使善根散而復聚。",
        "from": "X78n1552_002:0399c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀於明恒益信。",
        "from": "X78n1552_002:0399c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世之學人。",
        "from": "X78n1552_002:0399c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶往往不知擇友。",
        "from": "X78n1552_002:0399c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲夫。",
        "from": "X78n1552_002:0399c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修西聞見錄卷二",
        "from": "X78n1552_002:0399c23_0",
        "context_with_next_sentence": false
    }
]