[
    {
        "source_sentence": "南山祖師禮讚文",
        "from": "X74n1505_001:1079c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霅川沙門釋　仁岳　述",
        "from": "X74n1505_001:1079c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊以五乘啟運唯聲聞最先。",
        "from": "X74n1505_001:1079c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏流輝故毗尼為本。",
        "from": "X74n1505_001:1079c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務遵正法。",
        "from": "X74n1505_001:1079c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "允屬宗師。",
        "from": "X74n1505_001:1079c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既華竺以同文。",
        "from": "X74n1505_001:1079c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂聖賢而接武。",
        "from": "X74n1505_001:1079c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭惟南山教主西明律師。",
        "from": "X74n1505_001:1079c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迹應隋唐。",
        "from": "X74n1505_001:1079c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化敷京隰。",
        "from": "X74n1505_001:1079c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀刑開士甞示現於三生。",
        "from": "X74n1505_001:1079c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "申錫彛章乃流通於四分。",
        "from": "X74n1505_001:1079c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏自紵麻染翰刪補成篇。",
        "from": "X74n1505_001:1079c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中之降[(畾/(冗-几+互))*毛]雖分。",
        "from": "X74n1505_001:1079c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案上之貫華靡散。",
        "from": "X74n1505_001:1079c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠所感昭應良多。",
        "from": "X74n1505_001:1079c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會天辯以晤言。",
        "from": "X74n1505_001:1079c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使神功而宿衛。",
        "from": "X74n1505_001:1079c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繇是德推僧首為後世之波離。",
        "from": "X74n1505_001:1079c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學贍儒宗實方袍之平叔。",
        "from": "X74n1505_001:1079c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸夏機緣告謝率天補處。",
        "from": "X74n1505_001:1079c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰昇玅用難量常情罔逮。",
        "from": "X74n1505_001:1079c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等叨承祖裔。",
        "from": "X74n1505_001:1079c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲稟孫謀。",
        "from": "X74n1505_001:1079c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬諱日以斯臨。",
        "from": "X74n1505_001:1079c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢陳禴供。",
        "from": "X74n1505_001:1079c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想慈風而如在。",
        "from": "X74n1505_001:1079c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊杼讚辭。",
        "from": "X74n1505_001:1079c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶享克誠。",
        "from": "X74n1505_001:1079c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯迴昭鑒。",
        "from": "X74n1505_001:1079c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南山教主澄照大師。",
        "from": "X74n1505_001:1079c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願降臨道場。",
        "from": "X74n1505_001:1079c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受我供養。",
        "from": "X74n1505_001:1079c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月在太虗則百川現影。",
        "from": "X74n1505_001:1079c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心冥至道則三界垂形。",
        "from": "X74n1505_001:1079c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德山高而邁古賢。",
        "from": "X74n1505_001:1079c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詞河注而潤來學。",
        "from": "X74n1505_001:1079c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮日嚴精舍求寶函舍利時身南山尊者。",
        "from": "X74n1505_001:1079c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆倣此)　尸羅欲向靈壇受　　舍利先從聖像求　翹首刳心寂爾間　　寶函珠顆鏗然降　法蘭齎至功非異　　僧會祈來事可同　五分身因自此成　　首師戒品無虗授故我一心歸命頂禮。",
        "from": "X74n1505_001:1079c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆倣此)。",
        "from": "X74n1505_001:1080a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮紵麻蘭若撰毗尼事鈔時身。",
        "from": "X74n1505_001:1080a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　姚秦律部翻傳後　　元魏宗師講說來　象扇雖揚上首言　　虬文終待南山筆　五乘方駕毗尼道　　三行潛通解脫門　去濫傳真意不誣　　新章舊疏今何在一心頂禮太一山內修般舟三昧時身。",
        "from": "X74n1505_001:1080a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　擇地卜居當寶勢　　依經修定號般舟　九旬行處道場圓　　三昧成時心性顯　聽法或逢龍變女　　呈祥曾感陸生蓮　歷觀僧史聖賢中　　希有如斯精進者一心頂禮沁部雲室感天童給侍時身。",
        "from": "X74n1505_001:1080a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　久持淨業無諸染　　爰感童真侍四儀　檀炷氤氳發座隅　　銖衣綽約來天界　考槃自得無何趣　　叩寂誰知不住心　後代遺蹤尚可尋　　白雲虗室還如故一心頂禮西明金剎受佛牙供養時身。",
        "from": "X74n1505_001:1080a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世主涅槃從火化　　佛牙分布在天宮　若非菩薩顯殊熏　　安得那吒傳至寶　鳴珮忽隨天籟寂　　彩光猶帶月華寒　當時入塔付文網　　永與勞生為福利一心頂禮清官寶地講楞伽毗奈時身。",
        "from": "X74n1505_001:1080a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慈容侃侃居師座　　真侶莘莘集句筵　始為經宗演大乘　　終因律學垂彝範　棲身豈羨千株柰　　化物寧拘一室籌　辯才無礙異常倫　　堪受南天甘露賜一心頂禮慈恩靖舘與那提翻譯時身。",
        "from": "X74n1505_001:1080b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遠人慕義來唐國　　大士承恩赴譯場　索隱同翻五印文　　摛華自冠三經序　蒲牢振響聞清禁　　薝蔔流馨達紫宸　千年像法漸陵遲　　琅函鈿軸誰開演一心頂禮淨業故寺建寶壇授戒時身。",
        "from": "X74n1505_001:1080b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　古佛曾經封土處　　金園依舊築壇時　五級珠連覆釜形　　四方星應璿璣象　成功遂有長眉禮　　增戒仍多白足陞　光闡毗尼唯一人　　梵僧不是虗稱讚一心頂禮終南壇谷入泥洹封定時身。",
        "from": "X74n1505_001:1080b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　閻州應迹緣初謝　　良月加趺定不還　薪火雖云有滅時　　空華元是無生相　棘林空遺天香在　　石室深扃夜景長　戒德彌彰身後名　　懿宗追諡為澄照一心頂禮兜率天上生逸多內院時身。",
        "from": "X74n1505_001:1080b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　六事久修知足行　　二嚴親近逸多身　既留蟬蛻在南山　　俄受蓮胎生內院　法門已證圓成性　　人界無忘汲引心　天耳如聞哀歎聲　　願向龍華先得度至心懺悔我及十方法界一切眾生。",
        "from": "X74n1505_001:1080b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始妄源。",
        "from": "X74n1505_001:1080c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來真淨。",
        "from": "X74n1505_001:1080c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結精明而為念。",
        "from": "X74n1505_001:1080c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吸塵象以成勞。",
        "from": "X74n1505_001:1080c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七趣流形罔有知歸之所。",
        "from": "X74n1505_001:1080c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三乘被物曾無命駕之期。",
        "from": "X74n1505_001:1080c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨惑業以飄零。",
        "from": "X74n1505_001:1080c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在死生而孤露。",
        "from": "X74n1505_001:1080c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿緣微善。",
        "from": "X74n1505_001:1080c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今稟最靈。",
        "from": "X74n1505_001:1080c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剪髮毀容雖已參於僧寶。",
        "from": "X74n1505_001:1080c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕情洗慾且未涉於法流。",
        "from": "X74n1505_001:1080c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何當像季之時。",
        "from": "X74n1505_001:1080c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲奉終南之教。",
        "from": "X74n1505_001:1080c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所愧身心靡執。",
        "from": "X74n1505_001:1080c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮性難持。",
        "from": "X74n1505_001:1080c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違三千威儀。",
        "from": "X74n1505_001:1080c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破八萬微細。",
        "from": "X74n1505_001:1080c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彝章屢犯。",
        "from": "X74n1505_001:1080c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善法都亡。",
        "from": "X74n1505_001:1080c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屍捐潡澥之間詎堪經宿。",
        "from": "X74n1505_001:1080c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "糞刻旃檀之狀那可聞香。",
        "from": "X74n1505_001:1080c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶賴佛軫慈悲。",
        "from": "X74n1505_001:1080c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理容懺悔。",
        "from": "X74n1505_001:1080c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既權門而已闢。",
        "from": "X74n1505_001:1080c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故實道以同遵。",
        "from": "X74n1505_001:1080c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀罪性虗融。",
        "from": "X74n1505_001:1080c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即使戒根清淨。",
        "from": "X74n1505_001:1080c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四依如在。",
        "from": "X74n1505_001:1080c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三寶真常。",
        "from": "X74n1505_001:1080c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願哀憐。",
        "from": "X74n1505_001:1080c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱垂護念。",
        "from": "X74n1505_001:1080c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔已。",
        "from": "X74n1505_001:1080c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命頂禮。",
        "from": "X74n1505_001:1080c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆倣之)。",
        "from": "X74n1505_001:1080c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心勸請",
        "from": "X74n1505_001:1080c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來住壽依三藏　　諸祖潛神在十方　我今勸請演毗尼　　長與人天行聖道至心隨喜　一乘等賜靈山後　　萬善同歸秘藏中　是故修行大士因　　有為無漏皆隨喜至心迴向　心佛眾生同體性　　戒禪智慧互莊嚴　盡迴功德向菩提　　不住有流登彼岸至心發願　願奉律儀如上首　　親於法會說圓通　身心寂滅得無疑　　以佛道聲聞一切右霅溪法師讚歎德之辭。",
        "from": "X74n1505_001:1080c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃孤山法師所撰。",
        "from": "X74n1505_001:1081a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元不出祖禮。",
        "from": "X74n1505_001:1081a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼既採用。",
        "from": "X74n1505_001:1081a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不復移改也。",
        "from": "X74n1505_001:1081a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南山祖師讚文(畢)",
        "from": "X74n1505_001:1081a08_0",
        "context_with_next_sentence": false
    }
]