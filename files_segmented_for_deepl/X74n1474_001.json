[
    {
        "source_sentence": "華嚴道場起止大略",
        "from": "X74n1474_001:0374a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(每日清晨入壇。",
        "from": "X74n1474_001:0374a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸品經呪普回向畢。",
        "from": "X74n1474_001:0374a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主經者起香讚　大眾起立同聲念)。",
        "from": "X74n1474_001:0374a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○香讚",
        "from": "X74n1474_001:0374a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑪香乍爇。",
        "from": "X74n1474_001:0374a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界蒙熏。",
        "from": "X74n1474_001:0374a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴海會悉遙聞。",
        "from": "X74n1474_001:0374a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨處結祥雲。",
        "from": "X74n1474_001:0374a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠意方殷。",
        "from": "X74n1474_001:0374a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛現全身。",
        "from": "X74n1474_001:0374a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(主經出琲白云)。",
        "from": "X74n1474_001:0374a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮那妙體。",
        "from": "X74n1474_001:0374a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧法界以為身。",
        "from": "X74n1474_001:0374a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華藏莊嚴。",
        "from": "X74n1474_001:0374a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等太虗而為量。",
        "from": "X74n1474_001:0374a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維此法會不異寂場。",
        "from": "X74n1474_001:0374a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極依正以常融。",
        "from": "X74n1474_001:0374a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在聖凡而靡間。",
        "from": "X74n1474_001:0374a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初成正覺。",
        "from": "X74n1474_001:0374a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現神變於菩提場中。",
        "from": "X74n1474_001:0374a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再轉法輪。",
        "from": "X74n1474_001:0374a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震圓音於普光明殿。",
        "from": "X74n1474_001:0374a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧七處而恒演。",
        "from": "X74n1474_001:0374a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷九會以同宣。",
        "from": "X74n1474_001:0374a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敷萬行之因華。",
        "from": "X74n1474_001:0374a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴一乘之道果。",
        "from": "X74n1474_001:0374a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹遵教典。",
        "from": "X74n1474_001:0374a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大啟法筵。",
        "from": "X74n1474_001:0374a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰祝皇圖鞏固。",
        "from": "X74n1474_001:0374a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝道遐昌。",
        "from": "X74n1474_001:0374a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛日增輝。",
        "from": "X74n1474_001:0374a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法輪常轉。",
        "from": "X74n1474_001:0374a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方施主。",
        "from": "X74n1474_001:0374a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增益福田。",
        "from": "X74n1474_001:0374a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界眾生。",
        "from": "X74n1474_001:0374a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同圓種智。",
        "from": "X74n1474_001:0374a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(主歸位)。",
        "from": "X74n1474_001:0374a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無華嚴教主盧舍那佛(三念)。",
        "from": "X74n1474_001:0374a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○開經偈",
        "from": "X74n1474_001:0374a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無上甚深微妙法　　百千萬億難遭遇　我今見聞得受持　　願解如來真實義(起經卷卷經畢念補〔鬧〕真言舉讚。",
        "from": "X74n1474_001:0374a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或唱字母竟。",
        "from": "X74n1474_001:0374a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略回向云)。",
        "from": "X74n1474_001:0374a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願以此功德　　普及於一切　　我等與眾生　皆共成佛道(後皆倣此)○總回向文　稽首華嚴真性海　　種種光明徧照尊　普賢萬行所莊嚴　　一切真如法界藏　龍樹龍宮親誦憶　　實叉于闐闡微言　一乘圓頓妙法門　　見性成佛真秘典　手捧目觀心口誦　　當知夙有大因緣　見聞隨喜發菩提　　究竟圓成薩婆若十方三世一切佛諸尊菩薩摩訶薩摩訶般若波羅蜜。",
        "from": "X74n1474_001:0374b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(或拜行願品。",
        "from": "X74n1474_001:0374b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或禮華嚴文宣疏　起止竟)。",
        "from": "X74n1474_001:0374b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○隨州大洪山遂禪師禮華嚴經文",
        "from": "X74n1474_001:0374b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無毗盧教主。",
        "from": "X74n1474_001:0374b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華藏慈尊。",
        "from": "X74n1474_001:0374b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演寶偈之經文。",
        "from": "X74n1474_001:0374b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布琅函之玉軸。",
        "from": "X74n1474_001:0374b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵塵混入。",
        "from": "X74n1474_001:0374b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎剎圓融。",
        "from": "X74n1474_001:0374b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十兆九萬五千四十八字。",
        "from": "X74n1474_001:0374b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一乘圓教大方廣佛華嚴經。",
        "from": "X74n1474_001:0374b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲了知。",
        "from": "X74n1474_001:0374b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世一切佛。",
        "from": "X74n1474_001:0374b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀法界性。",
        "from": "X74n1474_001:0374b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惟心造。",
        "from": "X74n1474_001:0374b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常願供養常恭敬。",
        "from": "X74n1474_001:0374b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七處九會佛菩薩。",
        "from": "X74n1474_001:0374b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常願證入常宣說。",
        "from": "X74n1474_001:0374b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五周四分華嚴經。",
        "from": "X74n1474_001:0374b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常願供養無休歇。",
        "from": "X74n1474_001:0374b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十剎塵菩薩眾。",
        "from": "X74n1474_001:0374b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常願悟入常宣說。",
        "from": "X74n1474_001:0374b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣佛華嚴經。",
        "from": "X74n1474_001:0374b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願(某甲)生生世世。",
        "from": "X74n1474_001:0374b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在在處處。",
        "from": "X74n1474_001:0374b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼中常見如是經典。",
        "from": "X74n1474_001:0374b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳中常聞如是經典。",
        "from": "X74n1474_001:0374b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口中常誦如是經典。",
        "from": "X74n1474_001:0374b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手中常書如是經典。",
        "from": "X74n1474_001:0374b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心中常悟如是經典。",
        "from": "X74n1474_001:0374b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願生生世世。",
        "from": "X74n1474_001:0374b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在在處處。",
        "from": "X74n1474_001:0374b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得親近華藏一切聖賢。",
        "from": "X74n1474_001:0374b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常蒙華藏一切聖賢。",
        "from": "X74n1474_001:0374b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲攝受。",
        "from": "X74n1474_001:0374b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經所說。",
        "from": "X74n1474_001:0374b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願悉證明。",
        "from": "X74n1474_001:0374b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如善財菩薩。",
        "from": "X74n1474_001:0374b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如文殊師利菩薩。",
        "from": "X74n1474_001:0374c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如彌勒菩薩。",
        "from": "X74n1474_001:0374c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如普賢菩薩。",
        "from": "X74n1474_001:0374c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如觀世音菩薩。",
        "from": "X74n1474_001:0374c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如毗盧遮那佛。",
        "from": "X74n1474_001:0374c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此稱經功德。",
        "from": "X74n1474_001:0374c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此發願功德。",
        "from": "X74n1474_001:0374c03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願與四恩三有法界一切眾生。",
        "from": "X74n1474_001:0374c03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消無始以來盡法界虗空界無量罪垢。",
        "from": "X74n1474_001:0374c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願與四恩三有法界一切眾生。",
        "from": "X74n1474_001:0374c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解無始以來盡法界虗空界無量冤業。",
        "from": "X74n1474_001:0374c05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願與四恩三有法界一切眾生。",
        "from": "X74n1474_001:0374c06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集無始以來盡法界虗空界無量福智。",
        "from": "X74n1474_001:0374c06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同遊華藏莊嚴海。",
        "from": "X74n1474_001:0374c07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共入菩提大道場。",
        "from": "X74n1474_001:0374c07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無大方廣佛華嚴經。",
        "from": "X74n1474_001:0374c08_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴道場起止大略(竟)",
        "from": "X74n1474_001:0374c10_0",
        "context_with_next_sentence": false
    }
]