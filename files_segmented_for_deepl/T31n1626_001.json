[
    {
        "source_sentence": "大乘法界無差別論",
        "from": "T31n1626_001:0892a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅慧菩薩造",
        "from": "T31n1626_001:0892a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐于闐三藏提雲般若等譯",
        "from": "T31n1626_001:0892a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　稽首菩提心　　能為勝方便",
        "from": "T31n1626_001:0892a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得離生老死　　病苦依過失",
        "from": "T31n1626_001:0892a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心略說有十二種義。",
        "from": "T31n1626_001:0892a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是此論體。",
        "from": "T31n1626_001:0892a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸聰慧者應如次知。",
        "from": "T31n1626_001:0892a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂果故因故。",
        "from": "T31n1626_001:0892a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性故。",
        "from": "T31n1626_001:0892a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異名故。",
        "from": "T31n1626_001:0892a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無差別故。",
        "from": "T31n1626_001:0892a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分住故。",
        "from": "T31n1626_001:0892a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染故。",
        "from": "T31n1626_001:0892a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常恒故。",
        "from": "T31n1626_001:0892a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應故。",
        "from": "T31n1626_001:0892a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不作義利故。",
        "from": "T31n1626_001:0892a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作義利故。",
        "from": "T31n1626_001:0892a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一性故。",
        "from": "T31n1626_001:0892a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中最初顯示菩提心果。",
        "from": "T31n1626_001:0892a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令見勝利。",
        "from": "T31n1626_001:0892a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次即說彼所起之因。",
        "from": "T31n1626_001:0892a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後安立。",
        "from": "T31n1626_001:0892a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此出生相。",
        "from": "T31n1626_001:0892a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及顯異名而無差別。",
        "from": "T31n1626_001:0892a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切位無有染著。",
        "from": "T31n1626_001:0892a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與淨法而共相應。",
        "from": "T31n1626_001:0892a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不淨位中無諸功用。",
        "from": "T31n1626_001:0892a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清淨位能作利益。",
        "from": "T31n1626_001:0892a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一性涅槃應知。",
        "from": "T31n1626_001:0892a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是十二種義今此論中次第開闡。",
        "from": "T31n1626_001:0892a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者名為菩提心果。",
        "from": "T31n1626_001:0892b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂最寂靜涅盤界。",
        "from": "T31n1626_001:0892b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此唯諸佛所證。",
        "from": "T31n1626_001:0892b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非餘能得。",
        "from": "T31n1626_001:0892b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T31n1626_001:0892b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛如來能永滅盡一切微細煩惱熱故。",
        "from": "T31n1626_001:0892b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中無生永不復生意生諸蘊故。",
        "from": "T31n1626_001:0892b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無老此功德增上殊勝圓滿究竟無衰變故。",
        "from": "T31n1626_001:0892b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無死永捨離不思議變易死故。",
        "from": "T31n1626_001:0892b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無病一切煩惱所知障病及與習氣皆永斷故。",
        "from": "T31n1626_001:0892b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無苦依無始時來無明住地所有習氣皆永除故。",
        "from": "T31n1626_001:0892b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無過失一切身語意誤犯不行故。",
        "from": "T31n1626_001:0892b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則由菩提心。",
        "from": "T31n1626_001:0892b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為最上方便不退失因一切功德。",
        "from": "T31n1626_001:0892b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於究竟而得彼果。",
        "from": "T31n1626_001:0892b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼果者即涅盤界。",
        "from": "T31n1626_001:0892b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者為涅盤界。",
        "from": "T31n1626_001:0892b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂諸佛所有轉依相不思議法身。",
        "from": "T31n1626_001:0892b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以菩提心是不思議果因。",
        "from": "T31n1626_001:0892b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如白月初分故今頂禮。",
        "from": "T31n1626_001:0892b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次頌曰。",
        "from": "T31n1626_001:0892b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能益世善法　　聖法及諸佛",
        "from": "T31n1626_001:0892b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所依寶處如　　如地海種子",
        "from": "T31n1626_001:0892b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次菩提心如地。",
        "from": "T31n1626_001:0892b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間善苗生長所依故。",
        "from": "T31n1626_001:0892b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如海一切聖法珍寶積聚處所故。",
        "from": "T31n1626_001:0892b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如種子一切佛樹出生相續之因故。",
        "from": "T31n1626_001:0892b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是已說菩提心果。",
        "from": "T31n1626_001:0892b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何此因。",
        "from": "T31n1626_001:0892b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0892b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　信為其種子　　般若為其母",
        "from": "T31n1626_001:0892b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　三昧為胎藏　　大悲乳養人",
        "from": "T31n1626_001:0892b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次云何此因積集。",
        "from": "T31n1626_001:0892b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知如轉輪王子。",
        "from": "T31n1626_001:0892b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中於法深信為菩提心種子。",
        "from": "T31n1626_001:0892b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧通達為母。",
        "from": "T31n1626_001:0892b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧為胎藏。",
        "from": "T31n1626_001:0892b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由定樂住一切善法得安立故。",
        "from": "T31n1626_001:0892b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲為乳母。",
        "from": "T31n1626_001:0892b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以哀愍眾生。",
        "from": "T31n1626_001:0892b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死中無有厭倦。",
        "from": "T31n1626_001:0892b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切種智得圓滿故。",
        "from": "T31n1626_001:0892b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何自性。",
        "from": "T31n1626_001:0892b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0892b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自性無染著　　如火寶空水",
        "from": "T31n1626_001:0892b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　白法所成就　　猶如大山王",
        "from": "T31n1626_001:0892b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次應知此菩提心因積集已。",
        "from": "T31n1626_001:0892b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二種相。",
        "from": "T31n1626_001:0892b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂離染清淨相。",
        "from": "T31n1626_001:0892b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白法所成相。",
        "from": "T31n1626_001:0892c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離染清淨相者。",
        "from": "T31n1626_001:0892c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂即此心自性不染。",
        "from": "T31n1626_001:0892c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又出客塵煩惱障得清淨。",
        "from": "T31n1626_001:0892c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如火摩尼寶虛空水等為灰垢雲土所覆翳時。",
        "from": "T31n1626_001:0892c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖其自性無所染著。",
        "from": "T31n1626_001:0892c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然猶遠離灰等故。",
        "from": "T31n1626_001:0892c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令火等得清淨。",
        "from": "T31n1626_001:0892c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切眾生自性無差別心。",
        "from": "T31n1626_001:0892c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖貪等煩惱所不能染。",
        "from": "T31n1626_001:0892c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然猶遠離貪等故。",
        "from": "T31n1626_001:0892c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心得清淨。",
        "from": "T31n1626_001:0892c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白法所成相者。",
        "from": "T31n1626_001:0892c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂如是自性清淨心。",
        "from": "T31n1626_001:0892c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切白法所依。",
        "from": "T31n1626_001:0892c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以一切白淨法而成其性。",
        "from": "T31n1626_001:0892c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說須彌山眾寶所依。",
        "from": "T31n1626_001:0892c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以眾寶而合成故。",
        "from": "T31n1626_001:0892c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何異名。",
        "from": "T31n1626_001:0892c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0892c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　至於成佛位　　不名菩提心",
        "from": "T31n1626_001:0892c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　名為阿羅訶　　淨我樂常度",
        "from": "T31n1626_001:0892c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此心性明潔　　與法界同體",
        "from": "T31n1626_001:0892c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來依此心　　說不思議法",
        "from": "T31n1626_001:0892c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次此菩提心。",
        "from": "T31n1626_001:0892c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離一切客塵過惡。",
        "from": "T31n1626_001:0892c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離一切功德成就。",
        "from": "T31n1626_001:0892c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得四種最上波羅蜜。",
        "from": "T31n1626_001:0892c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名如來法身。",
        "from": "T31n1626_001:0892c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說世尊如來法身。",
        "from": "T31n1626_001:0892c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是常波羅蜜。",
        "from": "T31n1626_001:0892c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂波羅蜜。",
        "from": "T31n1626_001:0892c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我波羅蜜。",
        "from": "T31n1626_001:0892c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨波羅蜜。",
        "from": "T31n1626_001:0892c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來法身即是客塵煩惱所染自性清淨心差別名字。",
        "from": "T31n1626_001:0892c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如說。",
        "from": "T31n1626_001:0892c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗。",
        "from": "T31n1626_001:0892c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此清淨法性即是法界。",
        "from": "T31n1626_001:0892c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依此自性清淨心。",
        "from": "T31n1626_001:0892c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說不思議法。",
        "from": "T31n1626_001:0892c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何無差別。",
        "from": "T31n1626_001:0892c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0892c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法身眾生中　　本無差別相",
        "from": "T31n1626_001:0892c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無作無初盡　　亦無有染濁",
        "from": "T31n1626_001:0892c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法空智所知　　無相聖所行",
        "from": "T31n1626_001:0892c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切法依止　　斷常皆悉離",
        "from": "T31n1626_001:0892c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次此菩提心。",
        "from": "T31n1626_001:0892c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於一切眾生身中。",
        "from": "T31n1626_001:0892c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十種無差別相。",
        "from": "T31n1626_001:0892c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂無作以無為故。",
        "from": "T31n1626_001:0892c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無初以無起故。",
        "from": "T31n1626_001:0892c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡以無滅故。",
        "from": "T31n1626_001:0892c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染濁以自性清淨故。",
        "from": "T31n1626_001:0892c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性空智所知以一切法無我一味相故。",
        "from": "T31n1626_001:0892c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無形相以無諸根故。",
        "from": "T31n1626_001:0892c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖所行以是佛大聖境界故。",
        "from": "T31n1626_001:0893a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法所依以染淨諸法所依止故。",
        "from": "T31n1626_001:0893a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非常以是雜染非常法性故。",
        "from": "T31n1626_001:0893a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非斷以是清淨非斷法性故。",
        "from": "T31n1626_001:0893a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何分位。",
        "from": "T31n1626_001:0893a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0893a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不淨眾生界　　染中淨菩薩",
        "from": "T31n1626_001:0893a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　最極清淨者　　是說為如來",
        "from": "T31n1626_001:0893a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次此菩提心。",
        "from": "T31n1626_001:0893a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無差別相故。",
        "from": "T31n1626_001:0893a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不淨位中名眾生界。",
        "from": "T31n1626_001:0893a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於染淨位名為菩薩。",
        "from": "T31n1626_001:0893a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最清淨位說名如來。",
        "from": "T31n1626_001:0893a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說。",
        "from": "T31n1626_001:0893a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗。",
        "from": "T31n1626_001:0893a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此法身。",
        "from": "T31n1626_001:0893a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為本際無邊煩惱藏所纏。",
        "from": "T31n1626_001:0893a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始來生死趣中生滅流轉。",
        "from": "T31n1626_001:0893a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說名眾生界。",
        "from": "T31n1626_001:0893a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次舍利弗。",
        "from": "T31n1626_001:0893a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此法身。",
        "from": "T31n1626_001:0893a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭離生死漂流之苦。",
        "from": "T31n1626_001:0893a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨於一切諸欲境界。",
        "from": "T31n1626_001:0893a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於十波羅蜜及八萬四千法門中。",
        "from": "T31n1626_001:0893a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求菩提而修諸行。",
        "from": "T31n1626_001:0893a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說名菩薩。",
        "from": "T31n1626_001:0893a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次舍利弗。",
        "from": "T31n1626_001:0893a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此法身。",
        "from": "T31n1626_001:0893a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫一切煩惱藏。",
        "from": "T31n1626_001:0893a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切苦。",
        "from": "T31n1626_001:0893a15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永除一切煩惱隨煩惱垢。",
        "from": "T31n1626_001:0893a15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨極清淨最極清淨。",
        "from": "T31n1626_001:0893a15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於法性。",
        "from": "T31n1626_001:0893a16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至一切眾生所觀察地。",
        "from": "T31n1626_001:0893a16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡一切所知之地。",
        "from": "T31n1626_001:0893a17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇無二丈夫處。",
        "from": "T31n1626_001:0893a17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得無障礙無所著一切法自在力。",
        "from": "T31n1626_001:0893a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說名如來應正等覺。",
        "from": "T31n1626_001:0893a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故舍利弗。",
        "from": "T31n1626_001:0893a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生界不異法身。",
        "from": "T31n1626_001:0893a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身不異眾生界。",
        "from": "T31n1626_001:0893a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生界即是法身。",
        "from": "T31n1626_001:0893a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身即是眾生界。",
        "from": "T31n1626_001:0893a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此但名異非義有別。",
        "from": "T31n1626_001:0893a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何無染。",
        "from": "T31n1626_001:0893a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0893a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如明淨日　　為雲之所翳",
        "from": "T31n1626_001:0893a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　煩惱雲若除　　法身日明顯",
        "from": "T31n1626_001:0893a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此復云何。",
        "from": "T31n1626_001:0893a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於不淨位中。",
        "from": "T31n1626_001:0893a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現有無量諸煩惱。",
        "from": "T31n1626_001:0893a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不為染。",
        "from": "T31n1626_001:0893a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如日輪為雲所覆而性常清淨。",
        "from": "T31n1626_001:0893a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心亦爾。",
        "from": "T31n1626_001:0893a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼雜煩惱但為客故。",
        "from": "T31n1626_001:0893a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何常恒。",
        "from": "T31n1626_001:0893a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0893a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如劫盡火　　不能燒虛空",
        "from": "T31n1626_001:0893a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是老病死　　不能燒法界",
        "from": "T31n1626_001:0893a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如一切世間　　依虛空起盡",
        "from": "T31n1626_001:0893b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸根亦如是　　依無為生滅",
        "from": "T31n1626_001:0893b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次云何。",
        "from": "T31n1626_001:0893b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此現有生老死。",
        "from": "T31n1626_001:0893b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而言是常。",
        "from": "T31n1626_001:0893b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如虛空雖劫災火起不能為害。",
        "from": "T31n1626_001:0893b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界亦爾。",
        "from": "T31n1626_001:0893b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經言。",
        "from": "T31n1626_001:0893b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0893b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死者但隨俗說有。",
        "from": "T31n1626_001:0893b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0893b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死者諸根隱沒。",
        "from": "T31n1626_001:0893b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生者諸根新起。",
        "from": "T31n1626_001:0893b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非如來藏有生老死若沒若起。",
        "from": "T31n1626_001:0893b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0893b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來藏過有為相。",
        "from": "T31n1626_001:0893b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜常住不變不斷故。",
        "from": "T31n1626_001:0893b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何相應。",
        "from": "T31n1626_001:0893b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0893b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如光明熱色　　與燈無異相",
        "from": "T31n1626_001:0893b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是諸佛法　　於法性亦然",
        "from": "T31n1626_001:0893b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　煩惱性相離　　空彼客煩惱",
        "from": "T31n1626_001:0893b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　淨法常相應　　不空無垢法",
        "from": "T31n1626_001:0893b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次云何未成正覺。",
        "from": "T31n1626_001:0893b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而言於此佛法相應。",
        "from": "T31n1626_001:0893b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如光明熱色等與燈無有異相。",
        "from": "T31n1626_001:0893b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛法於法身亦如是。",
        "from": "T31n1626_001:0893b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說。",
        "from": "T31n1626_001:0893b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗。",
        "from": "T31n1626_001:0893b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛法身有功德法。",
        "from": "T31n1626_001:0893b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如燈有光明熱色不離不脫。",
        "from": "T31n1626_001:0893b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼寶珠光色形狀亦復如是。",
        "from": "T31n1626_001:0893b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗。",
        "from": "T31n1626_001:0893b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來所說諸佛法身智功德法不離不脫者。",
        "from": "T31n1626_001:0893b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂過恒河沙如來法也。",
        "from": "T31n1626_001:0893b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次如說有二種如來藏空智。",
        "from": "T31n1626_001:0893b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為二。",
        "from": "T31n1626_001:0893b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂空如來藏。",
        "from": "T31n1626_001:0893b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱若離若脫智。",
        "from": "T31n1626_001:0893b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空如來藏。",
        "from": "T31n1626_001:0893b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過恒河沙不思議諸佛法不離不脫智。",
        "from": "T31n1626_001:0893b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不作義利。",
        "from": "T31n1626_001:0893b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0893b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　煩惱藏纏覆　　不能益眾生",
        "from": "T31n1626_001:0893b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如蓮華未開　　如金在糞中",
        "from": "T31n1626_001:0893b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦如月盛滿　　阿脩羅所蝕",
        "from": "T31n1626_001:0893b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次眾生法身。",
        "from": "T31n1626_001:0893b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即與如是功德相應。",
        "from": "T31n1626_001:0893b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故無有如來德用。",
        "from": "T31n1626_001:0893b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知此如蓮未開。",
        "from": "T31n1626_001:0893b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡見葉共包裹故。",
        "from": "T31n1626_001:0893b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金墮廁。",
        "from": "T31n1626_001:0893b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於覺觀糞穢中故。",
        "from": "T31n1626_001:0893b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如滿月被蝕。",
        "from": "T31n1626_001:0893b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我慢羅睺所執取故。",
        "from": "T31n1626_001:0893b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如池水被濁。",
        "from": "T31n1626_001:0893b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪欲塵土所混雜故。",
        "from": "T31n1626_001:0893b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金山被翳。",
        "from": "T31n1626_001:0893c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋恚泥垢所封著故。",
        "from": "T31n1626_001:0893c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如虛空被覆。",
        "from": "T31n1626_001:0893c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡愚重雲之所蔽故。",
        "from": "T31n1626_001:0893c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日未出。",
        "from": "T31n1626_001:0893c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在無明習氣地中故。",
        "from": "T31n1626_001:0893c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世界未成。",
        "from": "T31n1626_001:0893c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在六處水大藏中故。",
        "from": "T31n1626_001:0893c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲無雨。",
        "from": "T31n1626_001:0893c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相違緣現前故。",
        "from": "T31n1626_001:0893c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總為頌曰。",
        "from": "T31n1626_001:0893c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如蓮金等未開顯　　佛體客塵翳亦然　是時功德不自益　　反此則能為大利云何作義利。",
        "from": "T31n1626_001:0893c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0893c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如池無垢濁　　如蓮大開敷",
        "from": "T31n1626_001:0893c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦如上真金　　洗除眾糞穢",
        "from": "T31n1626_001:0893c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如虛空清淨　　朗月星圍繞",
        "from": "T31n1626_001:0893c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　離欲解脫時　　功德亦如是",
        "from": "T31n1626_001:0893c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如日明現　　威光遍世間",
        "from": "T31n1626_001:0893c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如地生眾穀　　如海出眾寶",
        "from": "T31n1626_001:0893c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是益眾生　　令從諸有脫",
        "from": "T31n1626_001:0893c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　了知諸有性　　而起於大悲",
        "from": "T31n1626_001:0893c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若盡若不盡　　斯皆無所著",
        "from": "T31n1626_001:0893c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛心如大雲　　住於實際空",
        "from": "T31n1626_001:0893c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　三昧總持法　　甘雨隨時降",
        "from": "T31n1626_001:0893c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切諸善苗　　因此而生長",
        "from": "T31n1626_001:0893c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此偈中義與前相反。",
        "from": "T31n1626_001:0893c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知則是清淨法身。",
        "from": "T31n1626_001:0893c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離客塵眾患故。",
        "from": "T31n1626_001:0893c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就自性功德故。",
        "from": "T31n1626_001:0893c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證斯法者則名如來應正等覺。",
        "from": "T31n1626_001:0893c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於常住寂靜清涼不思議涅盤界。",
        "from": "T31n1626_001:0893c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒受安樂。",
        "from": "T31n1626_001:0893c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生之所歸仰。",
        "from": "T31n1626_001:0893c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何一性。",
        "from": "T31n1626_001:0893c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T31n1626_001:0893c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此即是法身　　亦即是如來",
        "from": "T31n1626_001:0893c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是亦即是　　聖諦第一義",
        "from": "T31n1626_001:0893c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　涅盤不異佛　　猶如冷即水",
        "from": "T31n1626_001:0893c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　功德不相離　　故無異涅盤",
        "from": "T31n1626_001:0893c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如來法身異涅盤者。",
        "from": "T31n1626_001:0894a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經中不應作如是說。",
        "from": "T31n1626_001:0894a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼頌曰。",
        "from": "T31n1626_001:0894a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生界清淨　　應知即法身",
        "from": "T31n1626_001:0894a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法身即涅盤　　涅盤即如來",
        "from": "T31n1626_001:0894a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次如有經言。",
        "from": "T31n1626_001:0894a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0894a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此阿耨多羅三藐三菩提名涅盤界。",
        "from": "T31n1626_001:0894a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此涅盤界名如來法身。",
        "from": "T31n1626_001:0894a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0894a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無異如來無異法身。",
        "from": "T31n1626_001:0894a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言如來者即法身也。",
        "from": "T31n1626_001:0894a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次應知。",
        "from": "T31n1626_001:0894a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此亦不異苦滅諦。",
        "from": "T31n1626_001:0894a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經言。",
        "from": "T31n1626_001:0894a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非以苦壞名苦滅諦。",
        "from": "T31n1626_001:0894a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言苦滅者。",
        "from": "T31n1626_001:0894a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以從本已來無作無起。",
        "from": "T31n1626_001:0894a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生無滅。",
        "from": "T31n1626_001:0894a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡離盡。",
        "from": "T31n1626_001:0894a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常恒不變無有斷絕。",
        "from": "T31n1626_001:0894a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性清淨。",
        "from": "T31n1626_001:0894a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切煩惱藏。",
        "from": "T31n1626_001:0894a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足過恒河沙不離不脫智不思議諸佛法。",
        "from": "T31n1626_001:0894a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說名如來法身世尊。",
        "from": "T31n1626_001:0894a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此如來法身。",
        "from": "T31n1626_001:0894a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未離煩惱藏。",
        "from": "T31n1626_001:0894a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說名如來藏。",
        "from": "T31n1626_001:0894a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0894a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來藏智。",
        "from": "T31n1626_001:0894a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是如來空智。",
        "from": "T31n1626_001:0894a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0894a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來藏者。",
        "from": "T31n1626_001:0894a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聲聞獨覺。",
        "from": "T31n1626_001:0894a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本所不見本所不證。",
        "from": "T31n1626_001:0894a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛世尊。",
        "from": "T31n1626_001:0894a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永壞一切煩惱藏。",
        "from": "T31n1626_001:0894a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具修一切苦滅道之所證得。",
        "from": "T31n1626_001:0894a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知。",
        "from": "T31n1626_001:0894a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛與涅盤無有差別。",
        "from": "T31n1626_001:0894a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如冷觸不異於水。",
        "from": "T31n1626_001:0894a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次應知。",
        "from": "T31n1626_001:0894a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有一乘道若不爾者。",
        "from": "T31n1626_001:0894a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異此應有餘涅盤故。",
        "from": "T31n1626_001:0894a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一法界豈有下劣涅盤勝妙涅盤耶。",
        "from": "T31n1626_001:0894a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不可言由下中上勝劣諸因而得一果。",
        "from": "T31n1626_001:0894a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以現見因差別果亦差別故。",
        "from": "T31n1626_001:0894a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經言。",
        "from": "T31n1626_001:0894a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0894a22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無勝劣差別法證得涅盤世尊。",
        "from": "T31n1626_001:0894a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等諸法證於涅盤。",
        "from": "T31n1626_001:0894a23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T31n1626_001:0894a23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等智。",
        "from": "T31n1626_001:0894a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等解脫。",
        "from": "T31n1626_001:0894a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等解脫見。",
        "from": "T31n1626_001:0894a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得涅盤。",
        "from": "T31n1626_001:0894a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故世尊。",
        "from": "T31n1626_001:0894a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅盤界者名為一味。",
        "from": "T31n1626_001:0894a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂平等味解脫味也。",
        "from": "T31n1626_001:0894a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘法界無差別論",
        "from": "T31n1626_001:0894a27_0",
        "context_with_next_sentence": false
    }
]