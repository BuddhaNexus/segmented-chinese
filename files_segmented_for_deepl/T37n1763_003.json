[
    {
        "source_sentence": "大般涅槃經集解卷第三(序品第一卷之第二)　出諸離車在虛空坐去地七多羅樹　又出諸大長者亦去地七多羅樹　出諸鬼神及禽獸異名　敘變林及重閣講堂事　釋魔王說呪事　出無邊身來事序品之第二爾時復有四恒河沙(至)及閻浮提諸王眷屬。",
        "from": "T37n1763_003:0388a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第三列諸豪族也。",
        "from": "T37n1763_003:0388a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求法故善脩戒行(至)於虛空中默然而住。",
        "from": "T37n1763_003:0388a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_003:0388a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去地七多羅樹者。",
        "from": "T37n1763_003:0388a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼以豪族自憍。",
        "from": "T37n1763_003:0388a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不願雜坐。",
        "from": "T37n1763_003:0388a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故置之空也。",
        "from": "T37n1763_003:0388a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時復有五恒河沙(至)繞佛一匝却住一面。",
        "from": "T37n1763_003:0388a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_003:0388a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀那婆王者。",
        "from": "T37n1763_003:0388a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿脩羅例也。",
        "from": "T37n1763_003:0388a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此言隨也。",
        "from": "T37n1763_003:0388a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時閻浮提中比丘比丘尼(至)其林變白猶如白鵠。",
        "from": "T37n1763_003:0388a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_003:0388a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪生愛壽者。",
        "from": "T37n1763_003:0388a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛滅為苦。",
        "from": "T37n1763_003:0388a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今明滅非作法。",
        "from": "T37n1763_003:0388b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃息偽反真也。",
        "from": "T37n1763_003:0388b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五色之中。",
        "from": "T37n1763_003:0388b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白是真實自然之色。",
        "from": "T37n1763_003:0388b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可染成。",
        "from": "T37n1763_003:0388b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "借事表理也。",
        "from": "T37n1763_003:0388b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_003:0388b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向三種瑞。",
        "from": "T37n1763_003:0388b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中悉集。",
        "from": "T37n1763_003:0388b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今現此相。",
        "from": "T37n1763_003:0388b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以摧諸天速集也。",
        "from": "T37n1763_003:0388b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於虛空中自然而有(至)皆悉悲感愁憂不樂。",
        "from": "T37n1763_003:0388b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_003:0388b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今說涅槃。",
        "from": "T37n1763_003:0388b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一切有。",
        "from": "T37n1763_003:0388b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為空。",
        "from": "T37n1763_003:0388b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希有常樂萬德。",
        "from": "T37n1763_003:0388b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如虛空中有堂閣也。",
        "from": "T37n1763_003:0388b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王釋提桓因(至)來至佛所稽首佛足。",
        "from": "T37n1763_003:0388b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_003:0388b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔多是聖人。",
        "from": "T37n1763_003:0388b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今是實。",
        "from": "T37n1763_003:0388b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛以大慈能轉其惡也。",
        "from": "T37n1763_003:0388b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言我等今者(至)除滅怖畏說如是呪。",
        "from": "T37n1763_003:0388b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明駿曰。",
        "from": "T37n1763_003:0388b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案維摩經云。",
        "from": "T37n1763_003:0388b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界。",
        "from": "T37n1763_003:0388b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作魔王者。",
        "from": "T37n1763_003:0388b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多是住不思議解脫菩薩。",
        "from": "T37n1763_003:0388b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信之於此矣。",
        "from": "T37n1763_003:0388b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侘枳咤咤羅侘枳盧呵隷(至)阿羅遮羅多羅莎訶案。",
        "from": "T37n1763_003:0388b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_003:0388b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能窮達其旨。",
        "from": "T37n1763_003:0388b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經之與呪。",
        "from": "T37n1763_003:0388b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竟何所在。",
        "from": "T37n1763_003:0388b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但物心難以理從。",
        "from": "T37n1763_003:0388b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易以威逼。",
        "from": "T37n1763_003:0388b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪方別是止耶之術。",
        "from": "T37n1763_003:0388b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔無法以助化。",
        "from": "T37n1763_003:0388b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說呪以弘道也。",
        "from": "T37n1763_003:0388b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此有三階。",
        "from": "T37n1763_003:0388b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前明魔以神力。",
        "from": "T37n1763_003:0388b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施地獄之樂。",
        "from": "T37n1763_003:0388b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦供而來。",
        "from": "T37n1763_003:0388b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第二說呪。",
        "from": "T37n1763_003:0388b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以請印可之。",
        "from": "T37n1763_003:0388b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是呪能令諸失心者(至)心懷愁惱却住一面。",
        "from": "T37n1763_003:0388b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_003:0388b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎呪功能。",
        "from": "T37n1763_003:0388b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復明己自為護。",
        "from": "T37n1763_003:0388b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以勸受持也。",
        "from": "T37n1763_003:0388b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第三請佛受供印呪。",
        "from": "T37n1763_003:0388b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛不受供。",
        "from": "T37n1763_003:0388b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而印其呪也。",
        "from": "T37n1763_003:0388b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大自在天王與其眷屬(至)天人師佛世尊。",
        "from": "T37n1763_003:0388b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_003:0388b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此菩薩所以現者。",
        "from": "T37n1763_003:0388b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "美大之辭也。",
        "from": "T37n1763_003:0388b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中明身大。",
        "from": "T37n1763_003:0388b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼土莊嚴。",
        "from": "T37n1763_003:0388b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生清淨。",
        "from": "T37n1763_003:0388b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世樂之極。",
        "from": "T37n1763_003:0388b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠來獻供。",
        "from": "T37n1763_003:0388b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更求勝法者。",
        "from": "T37n1763_003:0388b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證有為非樂也。",
        "from": "T37n1763_003:0388b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有兩段。",
        "from": "T37n1763_003:0388b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初辨無邊。",
        "from": "T37n1763_003:0388b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明佛神力也。",
        "from": "T37n1763_003:0388b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨無邊身中。",
        "from": "T37n1763_003:0388b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有八章。",
        "from": "T37n1763_003:0388b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即第一略敘彼土佛事也。",
        "from": "T37n1763_003:0388b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼佛即告第一大弟子(至)并可禮敬請決所疑。",
        "from": "T37n1763_003:0388c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第二彼佛命使來。",
        "from": "T37n1763_003:0388c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無邊身菩薩摩訶薩(至)所有威德悉滅無餘。",
        "from": "T37n1763_003:0388c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第三敘時眾驚怪也。",
        "from": "T37n1763_003:0388c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時文殊師利法王子(至)如來不久當般涅槃。",
        "from": "T37n1763_003:0388c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第四敘文殊安慰大眾也。",
        "from": "T37n1763_003:0388c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時大眾一切悉見(至)如是流布大乘經典。",
        "from": "T37n1763_003:0388c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第五敘菩薩神力。",
        "from": "T37n1763_003:0388c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無邊身菩薩(至)如來不久當般涅槃。",
        "from": "T37n1763_003:0388c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第六明菩薩以神力。",
        "from": "T37n1763_003:0388c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令身中眾生。",
        "from": "T37n1763_003:0388c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法悟也。",
        "from": "T37n1763_003:0388c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無邊身菩薩(至)餘無能見是菩薩身其量邊際。",
        "from": "T37n1763_003:0388c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七明以神力辦供。",
        "from": "T37n1763_003:0388c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無邊身菩薩及其眷屬(至)如是三請悉亦不受。",
        "from": "T37n1763_003:0388c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八明以供上佛。",
        "from": "T37n1763_003:0388c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛不受。",
        "from": "T37n1763_003:0388c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無邊身菩薩及其眷屬(至)却住一面皆亦如是。",
        "from": "T37n1763_003:0388c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉十方同到者總結。",
        "from": "T37n1763_003:0388c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時娑羅雙樹吉祥福地(至)見諸佛土亦復如是。",
        "from": "T37n1763_003:0388c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此辨佛神力有兩章。",
        "from": "T37n1763_003:0388c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即第一光明變穢為淨也。",
        "from": "T37n1763_003:0388c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來面門所出(至)身諸毛孔流血灑地。",
        "from": "T37n1763_003:0388c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_003:0388c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_003:0388c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化緣周畢。",
        "from": "T37n1763_003:0388c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表涅槃之相也。",
        "from": "T37n1763_003:0388c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三種。",
        "from": "T37n1763_003:0388c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一眾生心淨。",
        "from": "T37n1763_003:0388c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二國土淨。",
        "from": "T37n1763_003:0388c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三收光入口。",
        "from": "T37n1763_003:0388c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收光入口。",
        "from": "T37n1763_003:0388c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則止教之相。",
        "from": "T37n1763_003:0388c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生心淨。",
        "from": "T37n1763_003:0388c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則表化周。",
        "from": "T37n1763_003:0388c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土淨者。",
        "from": "T37n1763_003:0388c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則明行畢也。",
        "from": "T37n1763_003:0388c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧朗曰。",
        "from": "T37n1763_003:0388c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第二階。",
        "from": "T37n1763_003:0388c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示涅槃之相也。",
        "from": "T37n1763_003:0388c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第三",
        "from": "T37n1763_003:0388c28_0",
        "context_with_next_sentence": false
    }
]