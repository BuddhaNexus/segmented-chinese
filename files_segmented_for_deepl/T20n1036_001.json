[
    {
        "source_sentence": "千轉大明陀羅尼經",
        "from": "T20n1036_001:0018b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T20n1036_001:0018b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T20n1036_001:0018b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1036_001:0018b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊在忉利天中波利質多羅樹下。",
        "from": "T20n1036_001:0018b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主。",
        "from": "T20n1036_001:0018b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與一切天人軍眾。",
        "from": "T20n1036_001:0018b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後圍繞來詣佛所。",
        "from": "T20n1036_001:0018b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各至誠合掌歸依。",
        "from": "T20n1036_001:0018b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻仰如來次第而住。",
        "from": "T20n1036_001:0018b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主前白佛言。",
        "from": "T20n1036_001:0018b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我有陀羅尼名千轉大明。",
        "from": "T20n1036_001:0018b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼於諸世間。",
        "from": "T20n1036_001:0018b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為大饒益。",
        "from": "T20n1036_001:0018b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切天龍夜叉餓鬼鳩槃茶等乃至人非人等。",
        "from": "T20n1036_001:0018b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼者。",
        "from": "T20n1036_001:0018b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆降伏於諸眾生。",
        "from": "T20n1036_001:0018b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切不饒益事悉皆除殄。",
        "from": "T20n1036_001:0018b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊大慈大悲許我宣說。",
        "from": "T20n1036_001:0018c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言天主善哉善哉。",
        "from": "T20n1036_001:0018c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所說彼大千轉大明陀羅尼。",
        "from": "T20n1036_001:0018c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於世間作大饒益。",
        "from": "T20n1036_001:0018c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲說者當隨汝意。",
        "from": "T20n1036_001:0018c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主。",
        "from": "T20n1036_001:0018c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說千轉大明陀羅尼曰。",
        "from": "T20n1036_001:0018c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引一)曩呬怛寫婆帝(引二)婆誐嚩覩(引三)三野體難野過覩(引四)一切部多聞此所說。",
        "from": "T20n1036_001:0018c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驚怖迷悶狂惑退散。",
        "from": "T20n1036_001:0018c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶賢夜叉主及輪成就等現眾色像。",
        "from": "T20n1036_001:0018c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使諸部多諸鬼神等及彼遊方空行起屍瘧病諸惡鬼等。",
        "from": "T20n1036_001:0018c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切行毒根本邪法。",
        "from": "T20n1036_001:0018c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惱害眾生不饒益事。",
        "from": "T20n1036_001:0018c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆解脫。",
        "from": "T20n1036_001:0018c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿曩(引)鉢帝(引一)烏播曩(引)鉢帝(引二)盎誐商迦哩(引三)儗哩(二合)恨拏(二合)哩(引)娑嚩(二合引)賀(引四)曩謨(引)沒馱(引)野曩謨(引)達哩摩(二合引)野曩謨(引)僧伽(引)野(五)曩謨(引)阿(引)哩野(二合引)嚩路枳帝(引)濕嚩(二合)囉(引)野(六)[曰/月]地(引)薩埵(引)野(七)摩賀(引)薩埵(引)野(八)摩賀(引)迦(引)嚕尼迦(引)野(九)曩謨(引)阿(引)哩野(二合)摩賀(引)薩瑳(二合引)摩波囉(二合引)鉢多(二合引)野(十)怛儞也(二合)他(引十一)目訖帝(二合引)尾目訖帝(二合引十二)鼻(引)那儞(引)尾鼻(引)那儞(引十三)儞哩摩(二合)隸(引十四)尾摩隸(引十五)穌目契(引)尾目契(引十六)瞢誐隸(引)穌瞢誐隷(十七)一切王怖解脫。",
        "from": "T20n1036_001:0018c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切星曜變怪怖解脫。",
        "from": "T20n1036_001:0018c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切自他軍眾鬪戰怖解脫。",
        "from": "T20n1036_001:0018c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切兵仗怖解脫。",
        "from": "T20n1036_001:0018c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切水火漂焚怖解脫。",
        "from": "T20n1036_001:0018c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡病苦惱怖解脫。",
        "from": "T20n1036_001:0018c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切毒惡傷害怖解脫。",
        "from": "T20n1036_001:0018c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子怖象怖。",
        "from": "T20n1036_001:0018c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熊怖虎怖。",
        "from": "T20n1036_001:0018c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡獸等怖。",
        "from": "T20n1036_001:0018c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海漂溺怖深山閴寂怖。",
        "from": "T20n1036_001:0018c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸水灘難怖。",
        "from": "T20n1036_001:0018c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸怖悉皆解脫。",
        "from": "T20n1036_001:0018c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨娑(引)訖哩(二合引一)商迦致(引)商迦致(引二)迦嚕(引)致(引)迦嚕致(引)儞曳(引)娑嚩(二合引)賀(引三)入王宮時見大臣。",
        "from": "T20n1036_001:0019a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時行軍中時逢怨對。",
        "from": "T20n1036_001:0019a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時見毒蛇毒龍。",
        "from": "T20n1036_001:0019a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時遇夜叉毘舍遮羅剎烏鉢娑摩(二合引)囉所魅時。",
        "from": "T20n1036_001:0019a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至山海險難中時。",
        "from": "T20n1036_001:0019a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是怖畏悉皆解脫。",
        "from": "T20n1036_001:0019a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨(引)怛囉(二合引)赧婆嚩室羅(二合引)野赧(一)呬隷呬隷(二)唧隷唧隷(三)迦(引)播隷(四)摩(引)鄧霓娑嚩(二合引)賀(引五)又復王法所執或被枷鎖杻械牢固其身。",
        "from": "T20n1036_001:0019a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切枉橫憂苦逼切悉皆解脫。",
        "from": "T20n1036_001:0019a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨(引)多(引)哩(引)多(引)哩(引一)烏哆(引)哩(引二)覩哩(引)娑嚩(二合引)賀(引三)又復星曜所持。",
        "from": "T20n1036_001:0019a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或惡夢變怪致諸病苦夭枉至死。",
        "from": "T20n1036_001:0019a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至鬪諍論理互相恐逼。",
        "from": "T20n1036_001:0019a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸怖悉皆解脫。",
        "from": "T20n1036_001:0019a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨(引)左囉左囉(一)娑囉娑囉(二)尾娑囉尾娑囉(三)沒馱野(二合)沒馱野(二合四)[曰/月](引)馱(引)野彌底娑嚩(二合引)賀(五)洛乞叉(二合)洛乞叉(二合)[牟*含](六)薩哩嚩(二合)薩怛嚩(二合引)喃(引)左娑嚩(二合引)賀(引七)阿(引)哩野(二合)室哩(二合)滿哩馱(二合)覽(八)布瑟致(二合)俱嚕娑嚩(二合引)賀(引)摩麼(引)布哩嚩(二合)羅滿哩馱(二合)喃(十)扇(引)底孕(二合)俱囉娑嚩(二合引)賀(引十一)曩謨(引)賀帝(引)儞賀帝(引十二)薩哩嚩(二合)努瑟幀(二合引)鉢囉(二合)底孕(二合)惹儞(十三)謨(引)賀儞謨(引)乞叉(二合)尼娑嚩(二合引)賀(引十四)曩謨(引)迦致(引)儞致迦吒致(引)娑嚩(二合引)賀(引十五)曩謨(引)阿(引)囉尼嚩(引)囉尼(十六)薩哩嚩(二合)儞哩嚩(二合引)囉尼娑嚩(二合引)賀(引十七)又復一切惡人行不善事。",
        "from": "T20n1036_001:0019a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持邪禁呪作諸[示*厭]禱。",
        "from": "T20n1036_001:0019b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令眾生迷癡狂惑。",
        "from": "T20n1036_001:0019b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等事悉皆解脫。",
        "from": "T20n1036_001:0019b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚕嚕計(一)哩嚕計(二)底瑟姹(二合)滿馱夜(引)弭(三)夜嚩誐嚩(二合)切(四)尾夢贊底(五)呬隷唧隷(六)迦(引)播(引)隸(七)迦瑟站(二合引)誐薩哩嚩(二合)哆(八)薩哩嚩(二合)婆曳毘藥(二合)娑嚩(二合引)賀(引九)世尊我此千轉大明。",
        "from": "T20n1036_001:0019b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如轉輪聖王。",
        "from": "T20n1036_001:0019b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有摩尼寶名曰如意。",
        "from": "T20n1036_001:0019b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡諸所欲自然現前。",
        "from": "T20n1036_001:0019b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我此千轉大明亦復如是。",
        "from": "T20n1036_001:0019b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有得者凡諸苦惱悉皆解脫。",
        "from": "T20n1036_001:0019b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊末世之時眾生薄福。",
        "from": "T20n1036_001:0019b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三寶尊不知歸依。",
        "from": "T20n1036_001:0019b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣身口心常造過惡。",
        "from": "T20n1036_001:0019b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故世間諸惡鬼神伺得其便。",
        "from": "T20n1036_001:0019b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱自形質假託變現。",
        "from": "T20n1036_001:0019b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於晝夜中惱害眾生。",
        "from": "T20n1036_001:0019b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使諸眾生得種種苦惱。",
        "from": "T20n1036_001:0019b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若有眾生。",
        "from": "T20n1036_001:0019b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇斯惡鬼種種惱亂苦惱之時。",
        "from": "T20n1036_001:0019b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至世間一切不可意時。",
        "from": "T20n1036_001:0019b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於清淨之地取土七把。",
        "from": "T20n1036_001:0019b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每一把讀誦此大明加持七遍。",
        "from": "T20n1036_001:0019b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和作七丸繫於衣角。",
        "from": "T20n1036_001:0019b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令一切行不饒益惡鬼神等。",
        "from": "T20n1036_001:0019b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢侵近恐怖退散。",
        "from": "T20n1036_001:0019b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令是人晝夜安隱。",
        "from": "T20n1036_001:0019b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切不祥悉皆殄滅。",
        "from": "T20n1036_001:0019b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主說此千轉大明陀羅尼已。",
        "from": "T20n1036_001:0019b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踊躍歡喜與諸天眾禮佛而退。",
        "from": "T20n1036_001:0019b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千轉大明陀羅尼經",
        "from": "T20n1036_001:0019b22_0",
        "context_with_next_sentence": false
    }
]