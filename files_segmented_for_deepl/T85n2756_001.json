[
    {
        "source_sentence": "花嚴經義記卷第一",
        "from": "T85n2756_001:0234a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺寺沙門惠光述",
        "from": "T85n2756_001:0234a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來光明覺品者。",
        "from": "T85n2756_001:0234a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明如來意業教化智行無礙。",
        "from": "T85n2756_001:0234a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如光明也。",
        "from": "T85n2756_001:0234a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開曉於緣故名為覺。",
        "from": "T85n2756_001:0234a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就此品中放相輪光者。",
        "from": "T85n2756_001:0234a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至十地放眉間光。",
        "from": "T85n2756_001:0234a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就如來自體智行隨修人不同彰位殊之異也。",
        "from": "T85n2756_001:0234a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩名別者彰行業德位差別也。",
        "from": "T85n2756_001:0234a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就此光所照中初明世界實際相顯也。",
        "from": "T85n2756_001:0234a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明佛者實相內明故次明佛也。",
        "from": "T85n2756_001:0234a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實覺緣起故明菩薩。",
        "from": "T85n2756_001:0234a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明器世間在初智正覺世間在中。",
        "from": "T85n2756_001:0234a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生世間後者明始顯內集起修相也。",
        "from": "T85n2756_001:0234a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次後先明別菩薩。",
        "from": "T85n2756_001:0234a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次別世界。",
        "from": "T85n2756_001:0234a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後明佛者。",
        "from": "T85n2756_001:0234a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明終集起得實滿足修相也。",
        "from": "T85n2756_001:0234a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就此菩薩中。",
        "from": "T85n2756_001:0234a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明文殊者。",
        "from": "T85n2756_001:0234a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始證真性波若根本妙惠故也。",
        "from": "T85n2756_001:0234a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明覺首者。",
        "from": "T85n2756_001:0234a25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內明外朗故曰覺首。",
        "from": "T85n2756_001:0234a25_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有覺照之明。",
        "from": "T85n2756_001:0234a26_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能集萬行。",
        "from": "T85n2756_001:0234a26_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有資助之功故曰財首。",
        "from": "T85n2756_001:0234a26_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有集助之行。",
        "from": "T85n2756_001:0234a27_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能利潤無窮出世勝益故曰寶首也。",
        "from": "T85n2756_001:0234a27_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有資潤無窮故。",
        "from": "T85n2756_001:0234a28_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能自利利他德備具足。",
        "from": "T85n2756_001:0234a28_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云德首也。",
        "from": "T85n2756_001:0234a29_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有德備。",
        "from": "T85n2756_001:0234a29_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若非方便波若鑒達無遺無以善了於緣故。",
        "from": "T85n2756_001:0234b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次云目首也。",
        "from": "T85n2756_001:0234b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有了緣不迷故能達曰新之功故。",
        "from": "T85n2756_001:0234b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明精進首也。",
        "from": "T85n2756_001:0234b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有曰新之功法無不集故。",
        "from": "T85n2756_001:0234b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明法首也。",
        "from": "T85n2756_001:0234b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既備集諸法真融暉炎明照無滯故。",
        "from": "T85n2756_001:0234b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明智首也。",
        "from": "T85n2756_001:0234b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有明照無滯故。",
        "from": "T85n2756_001:0234b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能道備圓滿善順調柔故。",
        "from": "T85n2756_001:0234b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明賢首也。",
        "from": "T85n2756_001:0234b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故皆云首者。",
        "from": "T85n2756_001:0234b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明世間修集中最故名首也。",
        "from": "T85n2756_001:0234b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以世間之行窮滿在茲故云首也。",
        "from": "T85n2756_001:0234b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言修集真道之初故言首也。",
        "from": "T85n2756_001:0234b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中放光始照三千終至百千億世界者。",
        "from": "T85n2756_001:0234b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明始發自相解即相也。",
        "from": "T85n2756_001:0234b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又亦以近及遠復所以皆言東方者。",
        "from": "T85n2756_001:0234b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義同前釋也。",
        "from": "T85n2756_001:0234b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言一方各有一大菩薩者。",
        "from": "T85n2756_001:0234b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明方便之中自體因行也。",
        "from": "T85n2756_001:0234b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有眷屬菩薩者。",
        "from": "T85n2756_001:0234b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明行無不攝也。",
        "from": "T85n2756_001:0234b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各來至此者。",
        "from": "T85n2756_001:0234b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明圓入自體果行也。",
        "from": "T85n2756_001:0234b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊為首者。",
        "from": "T85n2756_001:0234b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明始發於妙實也。",
        "from": "T85n2756_001:0234b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復所以終至賢首者。",
        "from": "T85n2756_001:0234b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明此行雖復深廣而成在於世間故云賢首也。",
        "from": "T85n2756_001:0234b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然行非孤立。",
        "from": "T85n2756_001:0234b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必託境而發。",
        "from": "T85n2756_001:0234b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云始於金色終至如實色界也。",
        "from": "T85n2756_001:0234b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有實契於心是以得真覺發中。",
        "from": "T85n2756_001:0234b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言於諸佛所淨修梵行也。",
        "from": "T85n2756_001:0234b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以初明不動智者。",
        "from": "T85n2756_001:0234b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明始發真本也。",
        "from": "T85n2756_001:0234b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終至伏怨者。",
        "from": "T85n2756_001:0234b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦明成在於世未彰正離故伏怨也。",
        "from": "T85n2756_001:0234b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以無問而皆文殊自說者。",
        "from": "T85n2756_001:0234b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲明妙辯發中非託外緣。",
        "from": "T85n2756_001:0234b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又明不請之友也。",
        "from": "T85n2756_001:0234b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若據受益而言。",
        "from": "T85n2756_001:0234b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品明求聞法行。",
        "from": "T85n2756_001:0234b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下品明求說法行。",
        "from": "T85n2756_001:0234b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若論緣起行集次第時。",
        "from": "T85n2756_001:0234b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以妙實應於方便故。",
        "from": "T85n2756_001:0234b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言文殊說也。",
        "from": "T85n2756_001:0234b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既明方便契實故方便德。",
        "from": "T85n2756_001:0234b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就是以德熟歸本還應於實故。",
        "from": "T85n2756_001:0234b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下明難品。",
        "from": "T85n2756_001:0234b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊顯問諸菩薩答。",
        "from": "T85n2756_001:0234b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩問文殊復答者。",
        "from": "T85n2756_001:0234b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明德熟歸本故。",
        "from": "T85n2756_001:0234b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彰菩薩問也。",
        "from": "T85n2756_001:0234b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以本攝眾德故。",
        "from": "T85n2756_001:0234b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實圓彰",
        "from": "T85n2756_001:0234b29_13",
        "context_with_next_sentence": false
    }
]