[
    {
        "source_sentence": "隨緣集源流",
        "from": "X57n0975_003:0529b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台　耀老人　囑",
        "from": "X57n0975_003:0529b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付不藏闍黎衣拂囑辭",
        "from": "X57n0975_003:0529b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一宗妙解。",
        "from": "X57n0975_003:0529b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非博聞廣誡。",
        "from": "X57n0975_003:0529b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫能會其源。",
        "from": "X57n0975_003:0529b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三觀圓修。",
        "from": "X57n0975_003:0529b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須罙究研幾。",
        "from": "X57n0975_003:0529b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶克臻其要。",
        "from": "X57n0975_003:0529b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知佛祖慧命。",
        "from": "X57n0975_003:0529b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷非膚受淺心者所能傳弘也。",
        "from": "X57n0975_003:0529b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不藏闍黎。",
        "from": "X57n0975_003:0529b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氣質渾厚。",
        "from": "X57n0975_003:0529b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操履超脫。",
        "from": "X57n0975_003:0529b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久歷南宗禪席。",
        "from": "X57n0975_003:0529b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍參性相法門。",
        "from": "X57n0975_003:0529b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖遊觀廣覽。",
        "from": "X57n0975_003:0529b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不棄多聞。",
        "from": "X57n0975_003:0529b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而秉志傳弘。",
        "from": "X57n0975_003:0529b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寔欣性具。",
        "from": "X57n0975_003:0529b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癸丑歲。",
        "from": "X57n0975_003:0529b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從余靈芝海潮。",
        "from": "X57n0975_003:0529b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稟法華佛頂之旨。",
        "from": "X57n0975_003:0529b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恍然識教有所歸。",
        "from": "X57n0975_003:0529b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行有所統。",
        "from": "X57n0975_003:0529b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂悉心大小教部。",
        "from": "X57n0975_003:0529b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咨究妙宗旨要諸書。",
        "from": "X57n0975_003:0529b14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆於言下得意。",
        "from": "X57n0975_003:0529b14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥契夙心。",
        "from": "X57n0975_003:0529b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如慧成之遊深教苑。",
        "from": "X57n0975_003:0529b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而終歸南岳。",
        "from": "X57n0975_003:0529b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方行滿之初叩丹霞。",
        "from": "X57n0975_003:0529b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而悟賴荊溪。",
        "from": "X57n0975_003:0529b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫解行既遜。",
        "from": "X57n0975_003:0529b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須勤自行。",
        "from": "X57n0975_003:0529b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教觀脫手。",
        "from": "X57n0975_003:0529b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事貴利生。",
        "from": "X57n0975_003:0529b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以將　天溪和尚所傳衣拂。",
        "from": "X57n0975_003:0529b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用付與之。",
        "from": "X57n0975_003:0529b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所期解融眾教。",
        "from": "X57n0975_003:0529b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會沼渚江河。",
        "from": "X57n0975_003:0529b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而令成大海。",
        "from": "X57n0975_003:0529b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行空諸有。",
        "from": "X57n0975_003:0529b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破自他共離而獨露。",
        "from": "X57n0975_003:0529b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生援四隨而濟物。",
        "from": "X57n0975_003:0529b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使種熟脫機。",
        "from": "X57n0975_003:0529b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時時受潤。",
        "from": "X57n0975_003:0529b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秉三軌以弘經。",
        "from": "X57n0975_003:0529b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念衣座室誡。",
        "from": "X57n0975_003:0529b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在在昭明。",
        "from": "X57n0975_003:0529b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼五宗無綫絕之虞。",
        "from": "X57n0975_003:0529b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾佛種有綿延之慶。",
        "from": "X57n0975_003:0529b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶不負從上佛祖所以囑望後賢之意也。",
        "from": "X57n0975_003:0529b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付愚原睿子衣拂囑辭",
        "from": "X57n0975_003:0529b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一家傳通之旨。",
        "from": "X57n0975_003:0529b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三部俱重觀心。",
        "from": "X57n0975_003:0529b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三軌弘敷法化。",
        "from": "X57n0975_003:0529b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝機首貴慈和。",
        "from": "X57n0975_003:0529b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知佛祖教誡。",
        "from": "X57n0975_003:0529c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率以慈行為先。",
        "from": "X57n0975_003:0529c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而解寔副之矣。",
        "from": "X57n0975_003:0529c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚原闍黎。",
        "from": "X57n0975_003:0529c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天資頴悟。",
        "from": "X57n0975_003:0529c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博聞強記。",
        "from": "X57n0975_003:0529c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剃落護尊。",
        "from": "X57n0975_003:0529c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潛心具字。",
        "from": "X57n0975_003:0529c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殆亦有願而來者乎。",
        "from": "X57n0975_003:0529c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向以快快三吳無足可問。",
        "from": "X57n0975_003:0529c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖抱冲霄之志。",
        "from": "X57n0975_003:0529c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且歛出塵之翼。",
        "from": "X57n0975_003:0529c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癸丑。",
        "from": "X57n0975_003:0529c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受余佛頂之旨。",
        "from": "X57n0975_003:0529c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為咨詢。",
        "from": "X57n0975_003:0529c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有地奮志。",
        "from": "X57n0975_003:0529c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅隨稟受。",
        "from": "X57n0975_003:0529c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大小諸部。",
        "from": "X57n0975_003:0529c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞中識意。",
        "from": "X57n0975_003:0529c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得吾心之獨見。",
        "from": "X57n0975_003:0529c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨聞法華佛頂諸席。",
        "from": "X57n0975_003:0529c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "講聲清朗。",
        "from": "X57n0975_003:0529c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起四眾之欣。",
        "from": "X57n0975_003:0529c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞苐以苦行尚慳。",
        "from": "X57n0975_003:0529c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈和未洽。",
        "from": "X57n0975_003:0529c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似乎單輪隻翼。",
        "from": "X57n0975_003:0529c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解行不純。",
        "from": "X57n0975_003:0529c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為可惜也。",
        "from": "X57n0975_003:0529c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然於樂說門頭。",
        "from": "X57n0975_003:0529c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可當一面。",
        "from": "X57n0975_003:0529c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹將天溪和尚所傳衣拂。",
        "from": "X57n0975_003:0529c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用付與之。",
        "from": "X57n0975_003:0529c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所期仰遵佛誡。",
        "from": "X57n0975_003:0529c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御物慈和。",
        "from": "X57n0975_003:0529c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精心觀行。",
        "from": "X57n0975_003:0529c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高剔祖燈。",
        "from": "X57n0975_003:0529c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使解有行本。",
        "from": "X57n0975_003:0529c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則覺道可升。",
        "from": "X57n0975_003:0529c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行有解導。",
        "from": "X57n0975_003:0529c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則弘宣無壅。",
        "from": "X57n0975_003:0529c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馳二輪而遠致。",
        "from": "X57n0975_003:0529c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翥兩翅以高飛。",
        "from": "X57n0975_003:0529c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶不負子之夙根。",
        "from": "X57n0975_003:0529c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余之囑望也。",
        "from": "X57n0975_003:0529c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勉之。",
        "from": "X57n0975_003:0529c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付慧昶輪子衣拂囑辭",
        "from": "X57n0975_003:0529c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧昶維那。",
        "from": "X57n0975_003:0529c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤而喜博。",
        "from": "X57n0975_003:0529c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以語上之人也。",
        "from": "X57n0975_003:0529c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丁未已前。",
        "from": "X57n0975_003:0529c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余輔大覺老人。",
        "from": "X57n0975_003:0529c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理中外事。",
        "from": "X57n0975_003:0529c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重請啟講三部。",
        "from": "X57n0975_003:0529c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即負笈來參。",
        "from": "X57n0975_003:0529c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟是賦性遲重。",
        "from": "X57n0975_003:0529c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天機未深。",
        "from": "X57n0975_003:0529c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而志存強記。",
        "from": "X57n0975_003:0529c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法法求精。",
        "from": "X57n0975_003:0529c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非泛泛人也。",
        "from": "X57n0975_003:0529c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時方遊歷濟洞諸宗。",
        "from": "X57n0975_003:0529c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略無專屬。",
        "from": "X57n0975_003:0529c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癸丑已來。",
        "from": "X57n0975_003:0529c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂從余傾心教觀。",
        "from": "X57n0975_003:0529c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝晡咨疑。",
        "from": "X57n0975_003:0529c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於玄文止觀妙宗指要諸部。",
        "from": "X57n0975_003:0529c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靡不聽受。",
        "from": "X57n0975_003:0529c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持文貫義之下。",
        "from": "X57n0975_003:0529c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特喜宣弘。",
        "from": "X57n0975_003:0529c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖曰少不深書靈辯或遜。",
        "from": "X57n0975_003:0529c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然如愚公移山。",
        "from": "X57n0975_003:0529c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤而決志。",
        "from": "X57n0975_003:0529c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有不感應終遂者也。",
        "from": "X57n0975_003:0529c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以將大覺和尚所傳衣拂。",
        "from": "X57n0975_003:0529c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用付與之。",
        "from": "X57n0975_003:0529c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人云。",
        "from": "X57n0975_003:0529c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如為山未成一簣。",
        "from": "X57n0975_003:0529c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進吾往也。",
        "from": "X57n0975_003:0529c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今而後。",
        "from": "X57n0975_003:0529c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無然畔援。",
        "from": "X57n0975_003:0529c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無然欣羨。",
        "from": "X57n0975_003:0529c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決志圓宗。",
        "from": "X57n0975_003:0529c23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益勤妙解。",
        "from": "X57n0975_003:0529c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然時至。",
        "from": "X57n0975_003:0529c23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理彰。",
        "from": "X57n0975_003:0529c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶可以無礙慧遍利未聞也。",
        "from": "X57n0975_003:0529c24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾其勗諸。",
        "from": "X57n0975_003:0529c24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付文可社森二子合卷",
        "from": "X57n0975_003:0530a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智瑞二子。",
        "from": "X57n0975_003:0530a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆於癸丑年。",
        "from": "X57n0975_003:0530a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "負笈相從之人也。",
        "from": "X57n0975_003:0530a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資寔中材。",
        "from": "X57n0975_003:0530a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學堪語上。",
        "from": "X57n0975_003:0530a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純謹安分。",
        "from": "X57n0975_003:0530a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深藏晦養。",
        "from": "X57n0975_003:0530a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎言慎行。",
        "from": "X57n0975_003:0530a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟戒惟乘。",
        "from": "X57n0975_003:0530a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲光卜生流亞也。",
        "from": "X57n0975_003:0530a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特以弘辯稍巽。",
        "from": "X57n0975_003:0530a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天機未深。",
        "from": "X57n0975_003:0530a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故久處學地。",
        "from": "X57n0975_003:0530a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而未之為人。",
        "from": "X57n0975_003:0530a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其亦喜居學地。",
        "from": "X57n0975_003:0530a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不汲汲於為人也。",
        "from": "X57n0975_003:0530a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然窺其覆說論義之下。",
        "from": "X57n0975_003:0530a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無奔越絕塵之足。",
        "from": "X57n0975_003:0530a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不失步趨程度之規。",
        "from": "X57n0975_003:0530a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殆亦謹慎性成。",
        "from": "X57n0975_003:0530a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而學知有餘者也。",
        "from": "X57n0975_003:0530a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫時丁象季法道寖微。",
        "from": "X57n0975_003:0530a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不患無聰明才辯之人。",
        "from": "X57n0975_003:0530a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而患無躬修實學慎重韜養之士耳。",
        "from": "X57n0975_003:0530a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若二子者。",
        "from": "X57n0975_003:0530a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以為人矣。",
        "from": "X57n0975_003:0530a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰以大覺老人所傳衣拂。",
        "from": "X57n0975_003:0530a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用付與之。",
        "from": "X57n0975_003:0530a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟是養之於獨者。",
        "from": "X57n0975_003:0530a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將以涖眾。",
        "from": "X57n0975_003:0530a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自當因慎。",
        "from": "X57n0975_003:0530a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而益深其慎學之於己者。",
        "from": "X57n0975_003:0530a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方以利人。",
        "from": "X57n0975_003:0530a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固宜以精而益求其精。",
        "from": "X57n0975_003:0530a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勉之哉。",
        "from": "X57n0975_003:0530a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代付餘生月子源流",
        "from": "X57n0975_003:0530a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法運流行。",
        "from": "X57n0975_003:0530a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷而復續。",
        "from": "X57n0975_003:0530a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如連崗斷嶺。",
        "from": "X57n0975_003:0530a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地脉攸通者。",
        "from": "X57n0975_003:0530a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似有造物。",
        "from": "X57n0975_003:0530a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍為之陰相。",
        "from": "X57n0975_003:0530a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得而思議也。",
        "from": "X57n0975_003:0530a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "桐谿法祖門下。",
        "from": "X57n0975_003:0530a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象龍蹴踏。",
        "from": "X57n0975_003:0530a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而首出高弟。",
        "from": "X57n0975_003:0530a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為天柱。",
        "from": "X57n0975_003:0530a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但月先伯。",
        "from": "X57n0975_003:0530a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但師早世。",
        "from": "X57n0975_003:0530a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣拂託重。",
        "from": "X57n0975_003:0530a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天溪老之覓機授受。",
        "from": "X57n0975_003:0530a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而且未定其人也。",
        "from": "X57n0975_003:0530a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾等菴法兄。",
        "from": "X57n0975_003:0530a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北面天溪。",
        "from": "X57n0975_003:0530a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉心教觀者。",
        "from": "X57n0975_003:0530a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱十五年所。",
        "from": "X57n0975_003:0530a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而大通台旨。",
        "from": "X57n0975_003:0530a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先師竟以但師衣拂付之。",
        "from": "X57n0975_003:0530a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人頌天溪有繼滅興絕之德。",
        "from": "X57n0975_003:0530a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為法門一大艶傳事矣。",
        "from": "X57n0975_003:0530a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等兄急智祖三術勌。",
        "from": "X57n0975_003:0530a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入鄽垂手。",
        "from": "X57n0975_003:0530a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自韜有餘之才。",
        "from": "X57n0975_003:0530a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人悲未意其用。",
        "from": "X57n0975_003:0530a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丙辰初秋。",
        "from": "X57n0975_003:0530a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以衣拂託予。",
        "from": "X57n0975_003:0530a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠應他方。",
        "from": "X57n0975_003:0530a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華整而去。",
        "from": "X57n0975_003:0530a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "源流又幾乎息矣。",
        "from": "X57n0975_003:0530a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智覺餘生月子。",
        "from": "X57n0975_003:0530a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向與等兄。",
        "from": "X57n0975_003:0530a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臭味頗同。",
        "from": "X57n0975_003:0530a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參隨有稔。",
        "from": "X57n0975_003:0530a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從予數載。",
        "from": "X57n0975_003:0530a24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘戒既急。",
        "from": "X57n0975_003:0530a24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年學兼長。",
        "from": "X57n0975_003:0530a24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山家法脉。",
        "from": "X57n0975_003:0530a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可使一枝有久替也。",
        "from": "X57n0975_003:0530a24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂以等兄衣拂。",
        "from": "X57n0975_003:0530b01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付异傳弘。",
        "from": "X57n0975_003:0530b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫北齊遙承龍樹。",
        "from": "X57n0975_003:0530b01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無極直追太極。",
        "from": "X57n0975_003:0530b02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道統法脉。",
        "from": "X57n0975_003:0530b02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅息而後生息。",
        "from": "X57n0975_003:0530b02_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今古同然。",
        "from": "X57n0975_003:0530b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其間一綫不絕。",
        "from": "X57n0975_003:0530b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實天龍為之陰相。",
        "from": "X57n0975_003:0530b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得而思議也。",
        "from": "X57n0975_003:0530b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古云。",
        "from": "X57n0975_003:0530b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改玉者改行。",
        "from": "X57n0975_003:0530b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既仔肩祖道。",
        "from": "X57n0975_003:0530b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當益深教觀。",
        "from": "X57n0975_003:0530b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裕後光前。",
        "from": "X57n0975_003:0530b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母負佛祖負己靈。",
        "from": "X57n0975_003:0530b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又予之所囑也。",
        "from": "X57n0975_003:0530b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代付勝果因子源流",
        "from": "X57n0975_003:0530b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法於天溪老人者數。",
        "from": "X57n0975_003:0530b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "埒獻公之子求有如重耳。",
        "from": "X57n0975_003:0530b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人乎無也。",
        "from": "X57n0975_003:0530b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨格文法兄。",
        "from": "X57n0975_003:0530b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厚重純粹。",
        "from": "X57n0975_003:0530b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德勝於文。",
        "from": "X57n0975_003:0530b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不幸早世。",
        "from": "X57n0975_003:0530b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙彌勝果。",
        "from": "X57n0975_003:0530b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年在驅烏。",
        "from": "X57n0975_003:0530b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未之志學。",
        "from": "X57n0975_003:0530b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癸丑春。",
        "from": "X57n0975_003:0530b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從予聽講靈芝。",
        "from": "X57n0975_003:0530b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予以格兄之徒也。",
        "from": "X57n0975_003:0530b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著意汲引。",
        "from": "X57n0975_003:0530b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨歷海潮淨慧講席。",
        "from": "X57n0975_003:0530b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稟聞妙玄止觀諸書。",
        "from": "X57n0975_003:0530b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年事甫壯。",
        "from": "X57n0975_003:0530b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而朴厚好學。",
        "from": "X57n0975_003:0530b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綽有父風。",
        "from": "X57n0975_003:0530b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頴悟機辯。",
        "from": "X57n0975_003:0530b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居然跨竈。",
        "from": "X57n0975_003:0530b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今又若而歲矣。",
        "from": "X57n0975_003:0530b12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年益長學益進。",
        "from": "X57n0975_003:0530b12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而辯才益流利。",
        "from": "X57n0975_003:0530b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邁倫格公不死矣。",
        "from": "X57n0975_003:0530b13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫盛德之後。",
        "from": "X57n0975_003:0530b13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有達者。",
        "from": "X57n0975_003:0530b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以厚德而生純明。",
        "from": "X57n0975_003:0530b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或造物之報施不爽歟。",
        "from": "X57n0975_003:0530b14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋王祐有大功德於朝廷。",
        "from": "X57n0975_003:0530b15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不及為太平宰相。",
        "from": "X57n0975_003:0530b15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手植三槐曰。",
        "from": "X57n0975_003:0530b15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不做兒子。",
        "from": "X57n0975_003:0530b16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二郎必做。",
        "from": "X57n0975_003:0530b16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今格公大志未展。",
        "from": "X57n0975_003:0530b16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而收功於其徒。",
        "from": "X57n0975_003:0530b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶是乎。",
        "from": "X57n0975_003:0530b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂付與衣拂。",
        "from": "X57n0975_003:0530b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑嗣格兄。",
        "from": "X57n0975_003:0530b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲護蛟龍。",
        "from": "X57n0975_003:0530b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "支股間雖似斷絕。",
        "from": "X57n0975_003:0530b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而血脉終是貫通也。",
        "from": "X57n0975_003:0530b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或謂格師不祿衣繳天溪。",
        "from": "X57n0975_003:0530b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十餘稔矣。",
        "from": "X57n0975_003:0530b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝果受學受衣。",
        "from": "X57n0975_003:0530b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱在玉菴。",
        "from": "X57n0975_003:0530b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今使遠嗣永福。",
        "from": "X57n0975_003:0530b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無亦顗晉文繼絕之功。",
        "from": "X57n0975_003:0530b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於為推己及人乎。",
        "from": "X57n0975_003:0530b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非也。",
        "from": "X57n0975_003:0530b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予僅如十月嶺梅。",
        "from": "X57n0975_003:0530b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無力早花。",
        "from": "X57n0975_003:0530b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶有三五門人。",
        "from": "X57n0975_003:0530b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而實軫諸兄均不嗣也。",
        "from": "X57n0975_003:0530b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故昔為養育造就。",
        "from": "X57n0975_003:0530b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為付囑承嗣者。",
        "from": "X57n0975_003:0530b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "完予始終孝友志耳。",
        "from": "X57n0975_003:0530b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既相忘於彼此。",
        "from": "X57n0975_003:0530b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又何意於徼功哉。",
        "from": "X57n0975_003:0530b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且為格兄子不俱天。",
        "from": "X57n0975_003:0530b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溪門下孫乎搦管。",
        "from": "X57n0975_003:0530b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此不禁淚涔涔下矣。",
        "from": "X57n0975_003:0530c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付伊輪圓子衣拂囑辭",
        "from": "X57n0975_003:0530c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解目行足。",
        "from": "X57n0975_003:0530c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自行可以遄征。",
        "from": "X57n0975_003:0530c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義貫詞宏。",
        "from": "X57n0975_003:0530c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化他因之不壅。",
        "from": "X57n0975_003:0530c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者不可兼得。",
        "from": "X57n0975_003:0530c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾寧先行。",
        "from": "X57n0975_003:0530c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而後其言。",
        "from": "X57n0975_003:0530c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊輪上人。",
        "from": "X57n0975_003:0530c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參研教苑。",
        "from": "X57n0975_003:0530c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱歷三宗。",
        "from": "X57n0975_003:0530c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為滔滔者。",
        "from": "X57n0975_003:0530c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下皆是也。",
        "from": "X57n0975_003:0530c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故率易祿而難畜。",
        "from": "X57n0975_003:0530c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乙卯。",
        "from": "X57n0975_003:0530c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從予稟法華之旨。",
        "from": "X57n0975_003:0530c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂謂息心有地。",
        "from": "X57n0975_003:0530c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決志依隨。",
        "from": "X57n0975_003:0530c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如迦文之遍歷阿羅諸遷。",
        "from": "X57n0975_003:0530c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而枯坐雪山頂上。",
        "from": "X57n0975_003:0530c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡之翱翔濟洞五宗。",
        "from": "X57n0975_003:0530c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而降心兜率室中。",
        "from": "X57n0975_003:0530c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數年來。",
        "from": "X57n0975_003:0530c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧解日深。",
        "from": "X57n0975_003:0530c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而辯說未進。",
        "from": "X57n0975_003:0530c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽其舉措。",
        "from": "X57n0975_003:0530c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步步實地。",
        "from": "X57n0975_003:0530c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不汲汲於語言文字間。",
        "from": "X57n0975_003:0530c09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此固先行後言之用心也。",
        "from": "X57n0975_003:0530c10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但未免單輪隻翼之誚耳。",
        "from": "X57n0975_003:0530c10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然。",
        "from": "X57n0975_003:0530c11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺場十弟。",
        "from": "X57n0975_003:0530c11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈俱身子滿慈。",
        "from": "X57n0975_003:0530c11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔門四科。",
        "from": "X57n0975_003:0530c11_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非必宰予子貢各取其一端之長而已。",
        "from": "X57n0975_003:0530c12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因以天溪和尚所傳衣拂。",
        "from": "X57n0975_003:0530c12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用付與之。",
        "from": "X57n0975_003:0530c13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韓子曰。",
        "from": "X57n0975_003:0530c13_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水大者。",
        "from": "X57n0975_003:0530c13_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物之大小畢浮。",
        "from": "X57n0975_003:0530c13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則慧深者。",
        "from": "X57n0975_003:0530c14_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言之淺深皆當爾。",
        "from": "X57n0975_003:0530c14_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其精進自行。",
        "from": "X57n0975_003:0530c14_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使義貫而詞聯。",
        "from": "X57n0975_003:0530c14_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然時至。",
        "from": "X57n0975_003:0530c15_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理彰可發辯才而揮化矣。",
        "from": "X57n0975_003:0530c15_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧雙弘。",
        "from": "X57n0975_003:0530c15_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政在子遄征無已而已耳。",
        "from": "X57n0975_003:0530c16_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣集源流",
        "from": "X57n0975_003:0530c18_0",
        "context_with_next_sentence": false
    }
]