[
    {
        "source_sentence": "居士傳二",
        "from": "X88n1646_002:0187a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉遺民傳",
        "from": "X88n1646_002:0187a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉遺民者。",
        "from": "X88n1646_002:0187a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名程之。",
        "from": "X88n1646_002:0187a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字仲思。",
        "from": "X88n1646_002:0187a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彭城人。",
        "from": "X88n1646_002:0187a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漢楚元王之後也。",
        "from": "X88n1646_002:0187a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少孤。",
        "from": "X88n1646_002:0187a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事母孝。",
        "from": "X88n1646_002:0187a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善老莊言。",
        "from": "X88n1646_002:0187a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不委蛇於時俗。",
        "from": "X88n1646_002:0187a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初為府參軍。",
        "from": "X88n1646_002:0187a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉司徒王謐．丞相桓元．侍中謝琨．太尉劉裕先後引薦。",
        "from": "X88n1646_002:0187a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆力辭。",
        "from": "X88n1646_002:0187a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時慧遠法師止於廬山東林寺。",
        "from": "X88n1646_002:0187a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脩念佛三昧。",
        "from": "X88n1646_002:0187a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民往依之。",
        "from": "X88n1646_002:0187a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠師曰。",
        "from": "X88n1646_002:0187a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官祿巍巍云何不為。",
        "from": "X88n1646_002:0187a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民曰。",
        "from": "X88n1646_002:0187a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉室無磐石之固。",
        "from": "X88n1646_002:0187a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物情有壘卵之危。",
        "from": "X88n1646_002:0187a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾何為哉。",
        "from": "X88n1646_002:0187a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉裕以其不屈。",
        "from": "X88n1646_002:0187a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以遺民之號旌焉。",
        "from": "X88n1646_002:0187a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同時宗少文．周道祖．雷仲倫．張萊民．張秀實．畢士頴咸來廬山。",
        "from": "X88n1646_002:0187a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠師曰。",
        "from": "X88n1646_002:0187a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸君之來。",
        "from": "X88n1646_002:0187a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能無意於淨土乎。",
        "from": "X88n1646_002:0187a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃造西方三聖像。",
        "from": "X88n1646_002:0187a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建齋立社。",
        "from": "X88n1646_002:0187a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾至百二十有三人。",
        "from": "X88n1646_002:0187a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民鑱石為誓。",
        "from": "X88n1646_002:0187a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其辭曰。",
        "from": "X88n1646_002:0187a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫緣化之理既明。",
        "from": "X88n1646_002:0187a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則去來之兆顯矣。",
        "from": "X88n1646_002:0187a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷感之數既符。",
        "from": "X88n1646_002:0187a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則善惡之報必矣。",
        "from": "X88n1646_002:0187a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推交臂之潛淪。",
        "from": "X88n1646_002:0187b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟無常之期切。",
        "from": "X88n1646_002:0187b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審三報之相催。",
        "from": "X88n1646_002:0187b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知險趣之難拔。",
        "from": "X88n1646_002:0187b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此其同志諸賢所以夕惕朝勤仰思攸濟者也。",
        "from": "X88n1646_002:0187b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖神者可以感涉而不可以跡求。",
        "from": "X88n1646_002:0187b03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必感之有物則幽路咫尺。",
        "from": "X88n1646_002:0187b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟求之無主則渺茫何津。",
        "from": "X88n1646_002:0187b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今幸以不謀而感僉心西境。",
        "from": "X88n1646_002:0187b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叩篇開信亮情天發。",
        "from": "X88n1646_002:0187b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃機象通於寢夢。",
        "from": "X88n1646_002:0187b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欣歡百於子來。",
        "from": "X88n1646_002:0187b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是雲圖表暉影侔神造。",
        "from": "X88n1646_002:0187b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功由理諧事非人運。",
        "from": "X88n1646_002:0187b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茲實天啟其誠。",
        "from": "X88n1646_002:0187b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥運來萃者矣。",
        "from": "X88n1646_002:0187b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其景績參差功德不一。",
        "from": "X88n1646_002:0187b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖晨祈云同夕歸攸隔。",
        "from": "X88n1646_002:0187b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即我師友之眷。",
        "from": "X88n1646_002:0187b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良可悲矣。",
        "from": "X88n1646_002:0187b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以慨焉胥命。",
        "from": "X88n1646_002:0187b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "整襟法堂等施一心。",
        "from": "X88n1646_002:0187b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亭懷幽極。",
        "from": "X88n1646_002:0187b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓茲同人俱遊絕域。",
        "from": "X88n1646_002:0187b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其驚出絕倫首登神界。",
        "from": "X88n1646_002:0187b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無獨善於雲嶠。",
        "from": "X88n1646_002:0187b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忘兼全於幽谷。",
        "from": "X88n1646_002:0187b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後妙覲天儀啟心貞照。",
        "from": "X88n1646_002:0187b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識以悟心形由化革。",
        "from": "X88n1646_002:0187b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藉芙蓉於中流。",
        "from": "X88n1646_002:0187b12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔭瓊柯以咏言。",
        "from": "X88n1646_002:0187b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飄雲衣於八極。",
        "from": "X88n1646_002:0187b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汎香風以窮年。",
        "from": "X88n1646_002:0187b13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨三塗而緬謝。",
        "from": "X88n1646_002:0187b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傲天宮而長辭。",
        "from": "X88n1646_002:0187b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹眾靈以繼軌。",
        "from": "X88n1646_002:0187b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指大覺以為期。",
        "from": "X88n1646_002:0187b14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究茲道也豈不弘哉。",
        "from": "X88n1646_002:0187b15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民度西林澗北別立禪坊。",
        "from": "X88n1646_002:0187b15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精研元理兼持禁戒。",
        "from": "X88n1646_002:0187b16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞貽書關中。",
        "from": "X88n1646_002:0187b16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與什公．肇公揚榷經義。",
        "from": "X88n1646_002:0187b16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著念佛三昧詩。",
        "from": "X88n1646_002:0187b17_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居半載。",
        "from": "X88n1646_002:0187b17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於定中見佛光照地皆作金色。",
        "from": "X88n1646_002:0187b17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更十五年於正念佛時。",
        "from": "X88n1646_002:0187b18_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見阿彌陀佛玉毫光照垂手慰接。",
        "from": "X88n1646_002:0187b18_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民曰。",
        "from": "X88n1646_002:0187b19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安得如來為我摩頂。",
        "from": "X88n1646_002:0187b19_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆我以衣。",
        "from": "X88n1646_002:0187b20_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄而佛為摩頂。",
        "from": "X88n1646_002:0187b20_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引袈裟以被之。",
        "from": "X88n1646_002:0187b20_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他日又夢入七寶池。",
        "from": "X88n1646_002:0187b20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見蓮華青白色。",
        "from": "X88n1646_002:0187b21_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其水湛湛。",
        "from": "X88n1646_002:0187b21_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人頂有圓光胸出卍字。",
        "from": "X88n1646_002:0187b21_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指池水曰。",
        "from": "X88n1646_002:0187b22_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八功德水。",
        "from": "X88n1646_002:0187b22_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝可飲之。",
        "from": "X88n1646_002:0187b22_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民飲水甘美。",
        "from": "X88n1646_002:0187b22_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及寤異香發於毛孔。",
        "from": "X88n1646_002:0187b23_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃語人曰。",
        "from": "X88n1646_002:0187b23_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾淨土之緣至矣。",
        "from": "X88n1646_002:0187b23_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請僧轉妙法蓮華經近數百周。",
        "from": "X88n1646_002:0187b24_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民對像焚香再拜而祝曰。",
        "from": "X88n1646_002:0187b24_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以釋迦遺教。",
        "from": "X88n1646_002:0187c01_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知有阿彌陀佛。",
        "from": "X88n1646_002:0187c01_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此香當先供養釋迦如來。",
        "from": "X88n1646_002:0187c01_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次供養阿彌陀佛。",
        "from": "X88n1646_002:0187c02_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次供養妙法蓮華經。",
        "from": "X88n1646_002:0187c02_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以得生淨土。",
        "from": "X88n1646_002:0187c03_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此經功德。",
        "from": "X88n1646_002:0187c03_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願與一切有情俱生淨土。",
        "from": "X88n1646_002:0187c03_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即與眾別。",
        "from": "X88n1646_002:0187c04_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臥牀上面西合掌泊然化去。",
        "from": "X88n1646_002:0187c04_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預勅子雍即土為墳。",
        "from": "X88n1646_002:0187c04_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿用棺槨。",
        "from": "X88n1646_002:0187c05_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時義熈六年。",
        "from": "X88n1646_002:0187c05_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年五十九。",
        "from": "X88n1646_002:0187c05_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後六年遠師宴坐龕中。",
        "from": "X88n1646_002:0187c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從定起。",
        "from": "X88n1646_002:0187c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見阿彌陀佛身滿虗空。",
        "from": "X88n1646_002:0187c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀音勢至左右侍。",
        "from": "X88n1646_002:0187c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺民及社中僧先化者皆在側前揖遠師曰。",
        "from": "X88n1646_002:0187c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師早發心。",
        "from": "X88n1646_002:0187c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何來之晚。",
        "from": "X88n1646_002:0187c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃展期七日而逝(東林傳．出三藏記集)。",
        "from": "X88n1646_002:0187c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_002:0187c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法入茲土。",
        "from": "X88n1646_002:0187c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始昌於晉。",
        "from": "X88n1646_002:0187c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而士大夫之息心淨土者罕聞焉。",
        "from": "X88n1646_002:0187c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至遺民一唱。",
        "from": "X88n1646_002:0187c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近傾動。",
        "from": "X88n1646_002:0187c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖遠師實成之。",
        "from": "X88n1646_002:0187c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦由遺民精誠內激。",
        "from": "X88n1646_002:0187c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥孚眾志。",
        "from": "X88n1646_002:0187c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初遺民與周道祖．陶淵明稱潯陽三隱。",
        "from": "X88n1646_002:0187c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道祖既入社。",
        "from": "X88n1646_002:0187c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠師以書招淵明。",
        "from": "X88n1646_002:0187c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淵明曰。",
        "from": "X88n1646_002:0187c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許我飲酒則諾。",
        "from": "X88n1646_002:0187c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許之遂造焉。",
        "from": "X88n1646_002:0187c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無何攢眉而去。",
        "from": "X88n1646_002:0187c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志尚雖高。",
        "from": "X88n1646_002:0187c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於道闊矣。",
        "from": "X88n1646_002:0187c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜哉。",
        "from": "X88n1646_002:0187c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_002:0187c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真冷淡生活。",
        "from": "X88n1646_002:0187c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淡得盡時方好。",
        "from": "X88n1646_002:0187c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子",
        "from": "X88n1646_002:0187c16_3",
        "context_with_next_sentence": false
    }
]