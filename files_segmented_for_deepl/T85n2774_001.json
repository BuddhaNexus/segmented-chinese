[
    {
        "source_sentence": "維摩經疏",
        "from": "T85n2774_001:0433a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯才已下嘆有中智。",
        "from": "T85n2774_001:0433a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯才者。",
        "from": "T85n2774_001:0433a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言辭清當稱之為辯。",
        "from": "T85n2774_001:0433a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秀覺過物目曰才也。",
        "from": "T85n2774_001:0433a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無礙者。",
        "from": "T85n2774_001:0433a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人之才有窮有竭。",
        "from": "T85n2774_001:0433a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩辯才無有窮竭。",
        "from": "T85n2774_001:0433a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊戲神通者。",
        "from": "T85n2774_001:0433a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或世人遊戲或山林池沼以適其志。",
        "from": "T85n2774_001:0433a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明此大士五通化物於己心猶若遊戲也。",
        "from": "T85n2774_001:0433a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解。",
        "from": "T85n2774_001:0433a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊戲者。",
        "from": "T85n2774_001:0433a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率爾即去不加心力。",
        "from": "T85n2774_001:0433a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明菩薩在通不難義同遊戲。",
        "from": "T85n2774_001:0433a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮諸總持者。",
        "from": "T85n2774_001:0433a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得陀羅尼總持。",
        "from": "T85n2774_001:0433a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者聞持。",
        "from": "T85n2774_001:0433a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者義持。",
        "from": "T85n2774_001:0433a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞持者。",
        "from": "T85n2774_001:0433a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一逕於耳終不忘失。",
        "from": "T85n2774_001:0433a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義持者。",
        "from": "T85n2774_001:0433a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一領胸衿始終不喪。",
        "from": "T85n2774_001:0433a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所畏者。",
        "from": "T85n2774_001:0433a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內德既豐故不懼外敵也。",
        "from": "T85n2774_001:0433a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解。",
        "from": "T85n2774_001:0433a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩修四無畏。",
        "from": "T85n2774_001:0433a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者得聞持陀羅尼。",
        "from": "T85n2774_001:0433a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者善別眾生根性。",
        "from": "T85n2774_001:0433a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者無有難而不通。",
        "from": "T85n2774_001:0433a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者善決眾疑。",
        "from": "T85n2774_001:0433a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四句降魔勞怨者。",
        "from": "T85n2774_001:0433a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明其所除。",
        "from": "T85n2774_001:0433a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上既備空有二行。",
        "from": "T85n2774_001:0433a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非除於四魔。",
        "from": "T85n2774_001:0433a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能備空有之行。",
        "from": "T85n2774_001:0433a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次明斷除四魔。",
        "from": "T85n2774_001:0433a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱魔者即為因累。",
        "from": "T85n2774_001:0433a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰魔死魔即是果累也。",
        "from": "T85n2774_001:0433a19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天魔起惡之緣。",
        "from": "T85n2774_001:0433a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故宜除遣。",
        "from": "T85n2774_001:0433a20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五句入深法門訖決定大乘。",
        "from": "T85n2774_001:0433a20_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復明空有二行。",
        "from": "T85n2774_001:0433a21_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以而來。",
        "from": "T85n2774_001:0433a21_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上既明除於四魔。",
        "from": "T85n2774_001:0433a21_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不觀達空境則無以除三魔。",
        "from": "T85n2774_001:0433a22_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非有智備足何能除於天魔。",
        "from": "T85n2774_001:0433a22_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以重明也。",
        "from": "T85n2774_001:0433a23_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此理幽邃稱之為深。",
        "from": "T85n2774_001:0433a23_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能軌曰法。",
        "from": "T85n2774_001:0433a24_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通智為門。",
        "from": "T85n2774_001:0433a24_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善契理宗故言入也。",
        "from": "T85n2774_001:0433a24_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此語空境也。",
        "from": "T85n2774_001:0433a25_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善於智度者。",
        "from": "T85n2774_001:0433a25_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是智體。",
        "from": "T85n2774_001:0433a25_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正由智波羅蜜備故能入深法門。",
        "from": "T85n2774_001:0433a26_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達方便已下訖決定大乘。",
        "from": "T85n2774_001:0433a26_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明於有行。",
        "from": "T85n2774_001:0433a27_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達方便者。",
        "from": "T85n2774_001:0433a27_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善巧不著故稱方便。",
        "from": "T85n2774_001:0433a28_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事中無擁稱之為通。",
        "from": "T85n2774_001:0433a28_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能有所到故稱達也。",
        "from": "T85n2774_001:0433a29_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大願成就者。",
        "from": "T85n2774_001:0433a29_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩仰要佛果願度眾生。",
        "from": "T85n2774_001:0433a29_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明了眾生心之所趣者。",
        "from": "T85n2774_001:0433b01_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善識眾生心趣善惡。",
        "from": "T85n2774_001:0433b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又能分別諸根利鈍者。",
        "from": "T85n2774_001:0433b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上中下品機悟萬差悉能了知。",
        "from": "T85n2774_001:0433b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是識病。",
        "from": "T85n2774_001:0433b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久於佛道已下。",
        "from": "T85n2774_001:0433b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明識藥。",
        "from": "T85n2774_001:0433b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初性地訖于法雲能通至佛稱為佛道。",
        "from": "T85n2774_001:0433b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心已純寂者。",
        "from": "T85n2774_001:0433b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂之言善。",
        "from": "T85n2774_001:0433b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明菩薩心栖此法久已善練也。",
        "from": "T85n2774_001:0433b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定大乘者。",
        "from": "T85n2774_001:0433b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此語萬行連載為義。",
        "from": "T85n2774_001:0433b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明於大乘之理決定明解。",
        "from": "T85n2774_001:0433b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解理分明謂之決定。",
        "from": "T85n2774_001:0433b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六句諸有所作已下。",
        "from": "T85n2774_001:0433b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明於三業。",
        "from": "T85n2774_001:0433b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故而來。",
        "from": "T85n2774_001:0433b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明所以備於上德以三業為本。",
        "from": "T85n2774_001:0433b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次明諸有所作能善思量歎於口業。",
        "from": "T85n2774_001:0433b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論云思量論者難勝難壞。",
        "from": "T85n2774_001:0433b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意地思量口業說法無事不契也。",
        "from": "T85n2774_001:0433b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八地以上既備不思議智故。",
        "from": "T85n2774_001:0433b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能不思而照。",
        "from": "T85n2774_001:0433b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不議而應。",
        "from": "T85n2774_001:0433b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故言思量。",
        "from": "T85n2774_001:0433b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明菩薩於己以下不待思量。",
        "from": "T85n2774_001:0433b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若仰側佛地猶須思量。",
        "from": "T85n2774_001:0433b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言思量也。",
        "from": "T85n2774_001:0433b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一解。",
        "from": "T85n2774_001:0433b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩口業善說稱機不差所感動與理冥義同思量而作。",
        "from": "T85n2774_001:0433b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛威儀者。",
        "from": "T85n2774_001:0433b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎於身業。",
        "from": "T85n2774_001:0433b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地菩薩仰學如來象王視觀威儀舉動行坐住臥也。",
        "from": "T85n2774_001:0433b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心大如海者。",
        "from": "T85n2774_001:0433b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎於意業。",
        "from": "T85n2774_001:0433b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海者溟而難惻流潤無崖。",
        "from": "T85n2774_001:0433b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明大士德量溟曠非下所惻潤流無崖故喻如海也。",
        "from": "T85n2774_001:0433b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一解。",
        "from": "T85n2774_001:0433b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海者廣納眾流故稱為大。",
        "from": "T85n2774_001:0433b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明菩薩之心一切萬行盡能行之。",
        "from": "T85n2774_001:0433b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生盡欲度之。",
        "from": "T85n2774_001:0433b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切功德盡欲取之。",
        "from": "T85n2774_001:0433b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言心大如海也。",
        "from": "T85n2774_001:0433b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七句諸佛諮嗟訖世主所敬。",
        "from": "T85n2774_001:0433b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總結上六句也。",
        "from": "T85n2774_001:0433b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明既有如斯之德故。",
        "from": "T85n2774_001:0433b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上為諸佛諮嗟歎美。",
        "from": "T85n2774_001:0433b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下為人天之所欽敬也。",
        "from": "T85n2774_001:0433b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲度人故居毘耶離已下。",
        "from": "T85n2774_001:0433b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎外化德中第二段歎化物之德。",
        "from": "T85n2774_001:0433b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就中復有二段。",
        "from": "T85n2774_001:0433b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一從欲度人故訖入諸酒肆能立其志。",
        "from": "T85n2774_001:0433b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明在毘耶施化。",
        "from": "T85n2774_001:0433b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二從若在長者以下訖饒益眾生。",
        "from": "T85n2774_001:0433b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明天上人中隱顯行化也。",
        "from": "T85n2774_001:0433c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就初段中有四幡明義。",
        "from": "T85n2774_001:0433c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一幡皆有六句。",
        "from": "T85n2774_001:0433c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一幡從資財無量已下訖攝諸無智。",
        "from": "T85n2774_001:0433c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明以六度攝六蔽為次第也。",
        "from": "T85n2774_001:0433c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二幡雖為白衣訖而以禪悅為味。",
        "from": "T85n2774_001:0433c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明家內所須為次第也。",
        "from": "T85n2774_001:0433c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三幡若至博弈戲處以下訖雖獲俗利不以喜悅。",
        "from": "T85n2774_001:0433c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明遇緣住化不指當處所。",
        "from": "T85n2774_001:0433c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四幡從遊諸四衢已下訖能立其志。",
        "from": "T85n2774_001:0433c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明指當處所也。",
        "from": "T85n2774_001:0433c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資財無量攝諸貧民者。",
        "from": "T85n2774_001:0433c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初幡第一句。",
        "from": "T85n2774_001:0433c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧民貧苦所逼受道莫由。",
        "from": "T85n2774_001:0433c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以大士多畜財物先濟貧苦救其交急。",
        "from": "T85n2774_001:0433c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後以法語之。",
        "from": "T85n2774_001:0433c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二句攝諸毀禁。",
        "from": "T85n2774_001:0433c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生自非尸行成就無由可攝。",
        "from": "T85n2774_001:0433c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以大士先奉禁戒教令懺悔除罪。",
        "from": "T85n2774_001:0433c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘四度類可知也。",
        "from": "T85n2774_001:0433c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖為白衣以下。",
        "from": "T85n2774_001:0433c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二幡家內次第也。",
        "from": "T85n2774_001:0433c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一句雖為白衣奉持沙門清淨律行者。",
        "from": "T85n2774_001:0433c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫為俗人多求沙門之禮。",
        "from": "T85n2774_001:0433c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而淨名外為俗人而內懷道風。",
        "from": "T85n2774_001:0433c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能奉持沙門禁戒也。",
        "from": "T85n2774_001:0433c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二句雖處居家不著三界者。",
        "from": "T85n2774_001:0433c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既為俗人。",
        "from": "T85n2774_001:0433c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理須屋宇宅舍。",
        "from": "T85n2774_001:0433c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人於居家多生愛戀。",
        "from": "T85n2774_001:0433c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三界猶尚不生于著。",
        "from": "T85n2774_001:0433c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於居家而當愛戀也。",
        "from": "T85n2774_001:0433c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三句示有妻子常修梵行者。",
        "from": "T85n2774_001:0433c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既在家白衣。",
        "from": "T85n2774_001:0433c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理有妻息。",
        "from": "T85n2774_001:0433c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人妻子多污染淨行。",
        "from": "T85n2774_001:0433c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名示有妻子常以淨行自居。",
        "from": "T85n2774_001:0433c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四句現有眷屬常樂遠離者。",
        "from": "T85n2774_001:0433c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻兒之外悉是婢妾僮僕謂之眷屬。",
        "from": "T85n2774_001:0433c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人於眷屬多起染悋。",
        "from": "T85n2774_001:0433c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而淨名示現有之常樂遠離情無所悋。",
        "from": "T85n2774_001:0433c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五句雖服寶飾而以相好嚴身者。",
        "from": "T85n2774_001:0433c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗人既有妻子眷屬。",
        "from": "T85n2774_001:0433c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須服章衣被。",
        "from": "T85n2774_001:0433c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有服章冠[日/勉]示同寶飾。",
        "from": "T85n2774_001:0433c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以三十二相八十種好以嚴其容。",
        "from": "T85n2774_001:0433c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六句雖復飲食而禪悅為味者。",
        "from": "T85n2774_001:0433c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明藉衣嚴形。",
        "from": "T85n2774_001:0433c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復須食以養命雖復飡百味餚饍。",
        "from": "T85n2774_001:0434a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以法喜禪悅食更無餘食想。",
        "from": "T85n2774_001:0434a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若至博弈戲輒以度人以下。",
        "from": "T85n2774_001:0434a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三幡六句。",
        "from": "T85n2774_001:0434a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一句若至博弈戲處輒以度人者。",
        "from": "T85n2774_001:0434a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博者六博。",
        "from": "T85n2774_001:0434a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奕者碁也。",
        "from": "T85n2774_001:0434a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非方雅人道之處故云輒也。",
        "from": "T85n2774_001:0434a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二句受諸異道不毀正信者。",
        "from": "T85n2774_001:0434a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異道者邪見之流。",
        "from": "T85n2774_001:0434a06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復示同邪道。",
        "from": "T85n2774_001:0434a06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而稟正信未嘗有毀。",
        "from": "T85n2774_001:0434a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三句雖明世典常樂佛法者。",
        "from": "T85n2774_001:0434a07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖外關練五經史藉。",
        "from": "T85n2774_001:0434a08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而內以十二部經為栖神之宅。",
        "from": "T85n2774_001:0434a08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四句一切見敬為供養中最者。",
        "from": "T85n2774_001:0434a09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處利物見者敬仰。",
        "from": "T85n2774_001:0434a10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能生人善故有福之最也。",
        "from": "T85n2774_001:0434a10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五句執持正法攝諸長幼者。",
        "from": "T85n2774_001:0434a11_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外國別立有德者為斷事人以息唧訟。",
        "from": "T85n2774_001:0434a12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若心有阿黨則情有所偏。",
        "from": "T85n2774_001:0434a12_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而淨名以正法自居長幼歸從也。",
        "from": "T85n2774_001:0434a13_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六句一切治生諧偶雖獲俗利不以喜悅者。",
        "from": "T85n2774_001:0434a14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明大士雖復示求商利而不喜悅者。",
        "from": "T85n2774_001:0434a15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不貴難得之貨。",
        "from": "T85n2774_001:0434a16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無物而非寶。",
        "from": "T85n2774_001:0434a16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈為貪財。",
        "from": "T85n2774_001:0434a16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同於俗利。",
        "from": "T85n2774_001:0434a17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何喜悅之有也。",
        "from": "T85n2774_001:0434a17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱意曰諧。",
        "from": "T85n2774_001:0434a17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲利為隅。",
        "from": "T85n2774_001:0434a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊諸四衢以下。",
        "from": "T85n2774_001:0434a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四幡明行化指當處所為語。",
        "from": "T85n2774_001:0434a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就中有六句。",
        "from": "T85n2774_001:0434a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一句遊以四衢六句皆安入。",
        "from": "T85n2774_001:0434a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應言入諸四衢。",
        "from": "T85n2774_001:0434a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但遊之與入義不相背。",
        "from": "T85n2774_001:0434a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解。",
        "from": "T85n2774_001:0434a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從家向路於遊義是便也。",
        "from": "T85n2774_001:0434a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四衢者。",
        "from": "T85n2774_001:0434a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "路四是云衢也。",
        "from": "T85n2774_001:0434a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二句入治正法救護一切者。",
        "from": "T85n2774_001:0434a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相傳解。",
        "from": "T85n2774_001:0434a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百長者迭知同事次淨名入治則慈愍萬民救者。",
        "from": "T85n2774_001:0434a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦已至須救解。",
        "from": "T85n2774_001:0434a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦未至與其援護。",
        "from": "T85n2774_001:0434a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言救護一切也。",
        "from": "T85n2774_001:0434a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三句入講論處導以大乘者。",
        "from": "T85n2774_001:0434a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天竺多諸異學。",
        "from": "T85n2774_001:0434a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各言己道為勝。",
        "from": "T85n2774_001:0434a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國別立論堂以辯優劣。",
        "from": "T85n2774_001:0434a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊鼓眾集詣堂求論。",
        "from": "T85n2774_001:0434a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝者為師。",
        "from": "T85n2774_001:0434a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "負者為弟子。",
        "from": "T85n2774_001:0434a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名于時亦昇此堂摧伏外道。",
        "from": "T85n2774_001:0434a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後導以大乘。",
        "from": "T85n2774_001:0434a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四句入諸學堂誘開童蒙者。",
        "from": "T85n2774_001:0434a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始學之流稚幼曰童。",
        "from": "T85n2774_001:0434b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情識猶昧曰蒙。",
        "from": "T85n2774_001:0434b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名于時入此學堂。",
        "from": "T85n2774_001:0434b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將誘開發令悟也。",
        "from": "T85n2774_001:0434b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五句入諸婬舍示欲之過者。",
        "from": "T85n2774_001:0434b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以欲[牛*句]牽却以法語之。",
        "from": "T85n2774_001:0434b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婬欲生死之本。",
        "from": "T85n2774_001:0434b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡國破家損敗忠良亡身殞命皆由於此。",
        "from": "T85n2774_001:0434b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故示過令離也。",
        "from": "T85n2774_001:0434b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六句入諸酒肆能立其志者。",
        "from": "T85n2774_001:0434b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酒有三十六失。",
        "from": "T85n2774_001:0434b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開諸罪門能使神昏形濁多有所廢。",
        "from": "T85n2774_001:0434b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酒之說過欲亦立志。",
        "from": "T85n2774_001:0434b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互舉一邊。",
        "from": "T85n2774_001:0434b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解。",
        "from": "T85n2774_001:0434b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲過多故偏彰其過。",
        "from": "T85n2774_001:0434b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在長者已下。",
        "from": "T85n2774_001:0434b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是歎外化德中第二段明天上人中隱顯施化。",
        "from": "T85n2774_001:0434b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以每度其專在上化下如風之靡草無事不從。",
        "from": "T85n2774_001:0434b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者國邑有德能掩鄉望謂之長者。",
        "from": "T85n2774_001:0434b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說勝法。",
        "from": "T85n2774_001:0434b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者多以俗法訓世。",
        "from": "T85n2774_001:0434b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說出世之勝法。",
        "from": "T85n2774_001:0434b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說佛法中勝事。",
        "from": "T85n2774_001:0434b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士斷貪者。",
        "from": "T85n2774_001:0434b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天竺之人積財一億謂為居士。",
        "from": "T85n2774_001:0434b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不貪悋在懷何能財帛巨億。",
        "from": "T85n2774_001:0434b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故須斷貪著令其散財為福。",
        "from": "T85n2774_001:0434b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎利教以忍辱者。",
        "from": "T85n2774_001:0434b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎利秦言田主。",
        "from": "T85n2774_001:0434b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫初食地肥人情浮薄。",
        "from": "T85n2774_001:0434b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有自然粳糧人情轉薄。",
        "from": "T85n2774_001:0434b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立封疆生悋護之心。",
        "from": "T85n2774_001:0434b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別立有德割平處中相承為王。",
        "from": "T85n2774_001:0434b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領之首謂剎利種。",
        "from": "T85n2774_001:0434b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人自恃豪桀多起暴害。",
        "from": "T85n2774_001:0434b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故令斷瞋。",
        "from": "T85n2774_001:0434b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門者。",
        "from": "T85n2774_001:0434b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦言外意亦云淨行。",
        "from": "T85n2774_001:0434b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世相承多學道術。",
        "from": "T85n2774_001:0434b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恃己所得情慢於物。",
        "from": "T85n2774_001:0434b22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故除我慢。",
        "from": "T85n2774_001:0434b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大臣教以正法者。",
        "from": "T85n2774_001:0434b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現為輔相秉執國事不得枉濫於物。",
        "from": "T85n2774_001:0434b23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故教以正法。",
        "from": "T85n2774_001:0434b24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王子示以忠孝者。",
        "from": "T85n2774_001:0434b24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王位既高喜起篡逆。",
        "from": "T85n2774_001:0434b24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為臣須忠。",
        "from": "T85n2774_001:0434b25_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為子須孝。",
        "from": "T85n2774_001:0434b25_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王子有兩兼之羲故示忠孝也。",
        "from": "T85n2774_001:0434b25_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內官化正宮女者。",
        "from": "T85n2774_001:0434b26_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人多以耶態為事。",
        "from": "T85n2774_001:0434b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化令修正直之行。",
        "from": "T85n2774_001:0434b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶民令興福力者。",
        "from": "T85n2774_001:0434b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殖因微淺不勉斯濫。",
        "from": "T85n2774_001:0434b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故令興福力也。",
        "from": "T85n2774_001:0434b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵天誨以勝慧者。",
        "from": "T85n2774_001:0434b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵王居禪多喜著定。",
        "from": "T85n2774_001:0434b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故誨以勝慧莫令偏著。",
        "from": "T85n2774_001:0434c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋示現無常者。",
        "from": "T85n2774_001:0434c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五欲自恣不慮無常。",
        "from": "T85n2774_001:0434c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說無常。",
        "from": "T85n2774_001:0434c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又解。",
        "from": "T85n2774_001:0434c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現無常相令悟無常。",
        "from": "T85n2774_001:0434c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在護世護眾生者。",
        "from": "T85n2774_001:0434c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四天王典領鬼神不令侵人。",
        "from": "T85n2774_001:0434c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處其□勅諸鬼神擁護為事。",
        "from": "T85n2774_001:0434c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護諸眾生也。",
        "from": "T85n2774_001:0434c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是維摩詰以垂迹萬差處處示現為無量方便慈蔭六道。",
        "from": "T85n2774_001:0434c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為饒益眾生結也。",
        "from": "T85n2774_001:0434c06_11",
        "context_with_next_sentence": false
    }
]