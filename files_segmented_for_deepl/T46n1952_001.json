[
    {
        "source_sentence": "觀自在菩薩如意輪呪課法并序",
        "from": "T46n1952_001:0983a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋祖智者說摩訶止觀。",
        "from": "T46n1952_001:0983a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約四種三昧。",
        "from": "T46n1952_001:0983a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示諸經行法。",
        "from": "T46n1952_001:0983a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀者雖眾。",
        "from": "T46n1952_001:0983a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修者無幾。",
        "from": "T46n1952_001:0983a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何為其然乎。",
        "from": "T46n1952_001:0983a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以人根膚淺法味漓薄。",
        "from": "T46n1952_001:0983a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師勞於名相。",
        "from": "T46n1952_001:0983a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事佛懈於資熏。",
        "from": "T46n1952_001:0983a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故十觀成乘五悔助道。",
        "from": "T46n1952_001:0983a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僅存空言矣。",
        "from": "T46n1952_001:0983a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予切於講習之暇。",
        "from": "T46n1952_001:0983a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務求課念之益。",
        "from": "T46n1952_001:0983a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因發經藏。",
        "from": "T46n1952_001:0983a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得如意輪呪凡四本。",
        "from": "T46n1952_001:0983a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詳其文實同出而異譯也(一實叉難陀此云覺喜。",
        "from": "T46n1952_001:0983a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐天后久視元年譯。",
        "from": "T46n1952_001:0983a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八紙。",
        "from": "T46n1952_001:0983a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二阿彌真那。",
        "from": "T46n1952_001:0983a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云寶思惟。",
        "from": "T46n1952_001:0983a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中宗神龍二年譯。",
        "from": "T46n1952_001:0983a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七紙。",
        "from": "T46n1952_001:0983a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三唐天后代。",
        "from": "T46n1952_001:0983a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏法師義淨譯。",
        "from": "T46n1952_001:0983a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三紙。",
        "from": "T46n1952_001:0983a12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四唐天竺三藏法師。",
        "from": "T46n1952_001:0983a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提流志。",
        "from": "T46n1952_001:0983a12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云覺愛譯。",
        "from": "T46n1952_001:0983a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九紙)章句既簡方軌且約。",
        "from": "T46n1952_001:0983a12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮惡可以盡三障。",
        "from": "T46n1952_001:0983a13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持善可以具二嚴先天竺法師諱遵式。",
        "from": "T46n1952_001:0983a13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常觀此經知利物之要。",
        "from": "T46n1952_001:0983a14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特愛義淨所譯呪辭易誦乃鏤板模印詒厥四輩。",
        "from": "T46n1952_001:0983a15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而淨譯頗略所說法式但云攝心口誦。",
        "from": "T46n1952_001:0983a16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於事儀觀想曾未點示。",
        "from": "T46n1952_001:0983a17_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持之際意或缺如今輒。",
        "from": "T46n1952_001:0983a17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "采諸文為之補助。",
        "from": "T46n1952_001:0983a18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "原始洎末總成七科。",
        "from": "T46n1952_001:0983a18_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法式。",
        "from": "T46n1952_001:0983a19_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二觀想。",
        "from": "T46n1952_001:0983a19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三禮讚。",
        "from": "T46n1952_001:0983a19_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四持誦。",
        "from": "T46n1952_001:0983a19_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五懺願。",
        "from": "T46n1952_001:0983a20_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六證驗。",
        "from": "T46n1952_001:0983a20_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七釋疑。",
        "from": "T46n1952_001:0983a20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯皆沿襲本經使源流之不別放。",
        "from": "T46n1952_001:0983a20_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則先制貴箕裘之有在。",
        "from": "T46n1952_001:0983a21_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知罪于我以俟來哲云。",
        "from": "T46n1952_001:0983a21_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法式第一　經云。",
        "from": "T46n1952_001:0983a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T46n1952_001:0983a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻苾芻尼。",
        "from": "T46n1952_001:0983a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄔波索迦鄔波斯迦。",
        "from": "T46n1952_001:0983a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心希求此生現報者。",
        "from": "T46n1952_001:0983a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當一心受持此呪。",
        "from": "T46n1952_001:0983a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲受持時。",
        "from": "T46n1952_001:0983a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不問日月星辰吉凶并別修齋戒。",
        "from": "T46n1952_001:0983a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不假洗浴及以淨衣。",
        "from": "T46n1952_001:0983a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但止攝心口誦不懈。",
        "from": "T46n1952_001:0983a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千種事所願皆成。",
        "from": "T46n1952_001:0983a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無明呪能得與此如意呪王。",
        "from": "T46n1952_001:0983a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢力齊者。",
        "from": "T46n1952_001:0983a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至日日誦一百八遍。",
        "from": "T46n1952_001:0983a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見觀自在等。",
        "from": "T46n1952_001:0983a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實叉所譯其數亦同。",
        "from": "T46n1952_001:0983a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至七日七夜相續而誦真那譯云。",
        "from": "T46n1952_001:0983b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以後夜若平明時誦一千八遍。",
        "from": "T46n1952_001:0983b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至每日後夜誦三千遍。",
        "from": "T46n1952_001:0983b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流志譯云。",
        "from": "T46n1952_001:0983b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每常五更誦一千八十遍。",
        "from": "T46n1952_001:0983b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云六時時別一千八十遍相續不絕。",
        "from": "T46n1952_001:0983b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一字誦滿三洛叉(梵語一洛叉。",
        "from": "T46n1952_001:0983b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云十萬數)又云。",
        "from": "T46n1952_001:0983b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若比丘比丘尼誦一百八遍若男子誦一百六遍。",
        "from": "T46n1952_001:0983b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若女人誦一百三遍。",
        "from": "T46n1952_001:0983b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若童男誦一百遍。",
        "from": "T46n1952_001:0983b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若童女誦九十遍。",
        "from": "T46n1952_001:0983b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名課法。",
        "from": "T46n1952_001:0983b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切勝事皆獲成就(國王后妃公主宰官。",
        "from": "T46n1952_001:0983b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四姓所謂各有其數)今試議之。",
        "from": "T46n1952_001:0983b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫西梵之語。",
        "from": "T46n1952_001:0983b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或五竺國傳流有異中華所譯。",
        "from": "T46n1952_001:0983b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故三藏師宗本不同。",
        "from": "T46n1952_001:0983b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此唯聖裁難以情測既而正用義淨之本。",
        "from": "T46n1952_001:0983b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請以一百八遍為準所以然者。",
        "from": "T46n1952_001:0983b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為表破百八煩惱。",
        "from": "T46n1952_001:0983b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成就百八三昧也。",
        "from": "T46n1952_001:0983b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又義淨云。",
        "from": "T46n1952_001:0983b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若通一遍。",
        "from": "T46n1952_001:0983b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸事悉皆遂意。",
        "from": "T46n1952_001:0983b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又寶思惟譯云。",
        "from": "T46n1952_001:0983b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持之時。",
        "from": "T46n1952_001:0983b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須辛苦但誦皆成。",
        "from": "T46n1952_001:0983b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此言之。",
        "from": "T46n1952_001:0983b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設復不及一百八遍。",
        "from": "T46n1952_001:0983b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨數減之亦應無咎。",
        "from": "T46n1952_001:0983b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸本所誦時節不同。",
        "from": "T46n1952_001:0983b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋從人根樂欲差別。",
        "from": "T46n1952_001:0983b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今謂若依七日七夜誦者。",
        "from": "T46n1952_001:0983b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必須六時時別一百八遍。",
        "from": "T46n1952_001:0983b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大悲經限三七日。",
        "from": "T46n1952_001:0983b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請觀音限七七日之類是也。",
        "from": "T46n1952_001:0983b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依每日五更平明時誦者。",
        "from": "T46n1952_001:0983b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯為常課。",
        "from": "T46n1952_001:0983b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其數無在。",
        "from": "T46n1952_001:0983b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟曰不然。",
        "from": "T46n1952_001:0983b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得滿三洛叉。",
        "from": "T46n1952_001:0983b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈七日之中致茲大數。",
        "from": "T46n1952_001:0983b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若不及五更平明時者。",
        "from": "T46n1952_001:0983b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦自隨意。",
        "from": "T46n1952_001:0983b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以後夜為詰。",
        "from": "T46n1952_001:0983b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詰旦人心清爽故別言之。",
        "from": "T46n1952_001:0983b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨譯所以諒適時之寬也。",
        "from": "T46n1952_001:0983b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按流志本。",
        "from": "T46n1952_001:0983b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於晝夜居靜室中。",
        "from": "T46n1952_001:0983b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面東趺坐想聖觀自在。",
        "from": "T46n1952_001:0983b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對在目前誦念不亂。",
        "from": "T46n1952_001:0983b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒沈水香運心供養恭敬禮拜。",
        "from": "T46n1952_001:0983b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心所辦香華供養而不斷絕。",
        "from": "T46n1952_001:0983b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知誦呪之前。",
        "from": "T46n1952_001:0983b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須於靜室攝心觀想。",
        "from": "T46n1952_001:0983b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次入道場作禮供養。",
        "from": "T46n1952_001:0983b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所設形像正須西向。",
        "from": "T46n1952_001:0983b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不作壇當敷床座。",
        "from": "T46n1952_001:0983b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為三級上級置於法寶即是所持陀羅尼。",
        "from": "T46n1952_001:0983c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經左安釋迦像右安彌陀像。",
        "from": "T46n1952_001:0983c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中級唯安觀自在像。",
        "from": "T46n1952_001:0983c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右或華或燈。",
        "from": "T46n1952_001:0983c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下級唯列供具而已。",
        "from": "T46n1952_001:0983c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儻不能如上敷置。",
        "from": "T46n1952_001:0983c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但隨常式道場。",
        "from": "T46n1952_001:0983c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或唯存菩薩像隨分供養雖曰不假洗浴淨衣。",
        "from": "T46n1952_001:0983c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若七日別修用之益善。",
        "from": "T46n1952_001:0983c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故覺喜譯云。",
        "from": "T46n1952_001:0983c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲聖觀自在現為願者。",
        "from": "T46n1952_001:0983c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨澡浴抹香塗身著淨衣服等。",
        "from": "T46n1952_001:0983c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼經廣明供養。",
        "from": "T46n1952_001:0983c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請召迎送。",
        "from": "T46n1952_001:0983c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有印呪。",
        "from": "T46n1952_001:0983c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘本並缺今亦不行焉。",
        "from": "T46n1952_001:0983c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想第二　夫眾生無始唯以昏散障於明靜。",
        "from": "T46n1952_001:0983c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故塵勞外役道慧內盲。",
        "from": "T46n1952_001:0983c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八苦之事逼惱而不停。",
        "from": "T46n1952_001:0983c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二嚴之相窮顇而無取繇是飄流積劫孤露而不自省。",
        "from": "T46n1952_001:0983c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯心所招。",
        "from": "T46n1952_001:0983c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人愍之。",
        "from": "T46n1952_001:0983c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假隱密語詮微妙法。",
        "from": "T46n1952_001:0983c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教令受持。",
        "from": "T46n1952_001:0983c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先為其世間之樂。",
        "from": "T46n1952_001:0983c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復其如來之性。",
        "from": "T46n1952_001:0983c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諄諄然若蜾蠃之祝螟蛉也。",
        "from": "T46n1952_001:0983c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有口誦復加心觀不亦速哉。",
        "from": "T46n1952_001:0983c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流志譯云。",
        "from": "T46n1952_001:0983c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若真成就此陀羅尼最勝法者。",
        "from": "T46n1952_001:0983c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處若食不食若淨不淨。",
        "from": "T46n1952_001:0983c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心觀想聖觀自在相好圓滿如日初出光明晃曜。",
        "from": "T46n1952_001:0983c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦斯陀羅尼無有妄念。",
        "from": "T46n1952_001:0983c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常持不間一無過犯。",
        "from": "T46n1952_001:0983c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則得菩薩現金色身。",
        "from": "T46n1952_001:0983c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除諸障垢神力加被心所求願皆悉滿足。",
        "from": "T46n1952_001:0983c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真那譯云。",
        "from": "T46n1952_001:0983c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦念之時當憶念觀世音菩薩求作依怙。",
        "from": "T46n1952_001:0983c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則心口相應念誦雙運。",
        "from": "T46n1952_001:0983c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持之至矣但初心馳散攝之為難。",
        "from": "T46n1952_001:0983c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故於靜室趺坐先觀聖相。",
        "from": "T46n1952_001:0983c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經文既略今助顯之。",
        "from": "T46n1952_001:0983c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且菩薩本證妙覺號正法明。",
        "from": "T46n1952_001:0983c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迹居補處名觀自在本迹雖殊。",
        "from": "T46n1952_001:0983c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不皆隨真如之體起應化之用。",
        "from": "T46n1952_001:0983c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其體如鑑其用如像。",
        "from": "T46n1952_001:0983c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故真不自應應之在機。",
        "from": "T46n1952_001:0983c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶鑑不自像像之在形耳。",
        "from": "T46n1952_001:0983c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次機有勝劣應有大小。",
        "from": "T46n1952_001:0983c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應之大者身長八十萬億那由他由旬(如十六觀經)應之小者於一切處身同眾生。",
        "from": "T46n1952_001:0984a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大應現于極樂。",
        "from": "T46n1952_001:0984a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而小應遊諸穢土。",
        "from": "T46n1952_001:0984a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而經云。",
        "from": "T46n1952_001:0984a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩所居補怛羅山者。",
        "from": "T46n1952_001:0984a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即示此土遊止之處也。",
        "from": "T46n1952_001:0984a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今創心修觀。",
        "from": "T46n1952_001:0984a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想羸劣當觀小應。",
        "from": "T46n1952_001:0984a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相何如準流志譯。",
        "from": "T46n1952_001:0984a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫觀自在像。",
        "from": "T46n1952_001:0984a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今畫三十二葉開敷蓮華於華臺上。",
        "from": "T46n1952_001:0984a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫如意輪聖觀自在菩薩。",
        "from": "T46n1952_001:0984a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面西結加趺坐。",
        "from": "T46n1952_001:0984a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏貌熙怡身金色相。",
        "from": "T46n1952_001:0984a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首戴寶冠有化佛菩薩左手執開敷華。",
        "from": "T46n1952_001:0984a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當其臺上畫如意寶珠。",
        "from": "T46n1952_001:0984a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作說法相。",
        "from": "T46n1952_001:0984a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天妙衣服珠璫環釧。",
        "from": "T46n1952_001:0984a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶瓔珞種種莊嚴身放眾光。",
        "from": "T46n1952_001:0984a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修者依此聖相繫念觀察。",
        "from": "T46n1952_001:0984a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此相從心想生。",
        "from": "T46n1952_001:0984a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如虛空華本無所有。",
        "from": "T46n1952_001:0984a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此相及心元是觀音妙淨明體。",
        "from": "T46n1952_001:0984a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空華即假本無即空。",
        "from": "T46n1952_001:0984a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙體即中三諦圓融。",
        "from": "T46n1952_001:0984a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非一非異不可得而思議也。",
        "from": "T46n1952_001:0984a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非唯聖相如是抑亦說法皆然。",
        "from": "T46n1952_001:0984a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良由眾生性具諸法。",
        "from": "T46n1952_001:0984a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能隨緣發生。",
        "from": "T46n1952_001:0984a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩修證諸法。",
        "from": "T46n1952_001:0984a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能普門示現。",
        "from": "T46n1952_001:0984a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法雖異空中是同。",
        "from": "T46n1952_001:0984a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若唯異非同則失感應之理若唯同非異則失感應之事失於理者。",
        "from": "T46n1952_001:0984a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如氷炭之不可合也。",
        "from": "T46n1952_001:0984a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失於事者如谷響之不能召也。",
        "from": "T46n1952_001:0984a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事理既備感應乃成。",
        "from": "T46n1952_001:0984a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復須知三諦之法。",
        "from": "T46n1952_001:0984a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是明呪所詮之義。",
        "from": "T46n1952_001:0984a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故義淨譯為無障礙。",
        "from": "T46n1952_001:0984a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在蓮華如意寶輪王陀羅尼。",
        "from": "T46n1952_001:0984a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言無障礙者。",
        "from": "T46n1952_001:0984a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即菩薩具三諦之智無三惑之礙也。",
        "from": "T46n1952_001:0984a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在者用此之智觀乎眾生而得自在也。",
        "from": "T46n1952_001:0984a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯蓋以能說之人命所說之呪耳。",
        "from": "T46n1952_001:0984a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華者生而有實。",
        "from": "T46n1952_001:0984a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬法身德本來具足。",
        "from": "T46n1952_001:0984a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意者珠也。",
        "from": "T46n1952_001:0984a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T46n1952_001:0984a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨妙珍寶猶如意樹。",
        "from": "T46n1952_001:0984a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意寶珠。",
        "from": "T46n1952_001:0984a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬解脫德能生諸法。",
        "from": "T46n1952_001:0984a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶輪者有摧伏之力。",
        "from": "T46n1952_001:0984a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬般若德能破諸法。",
        "from": "T46n1952_001:0984a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又蓮華出水離染清淨譬般若。",
        "from": "T46n1952_001:0984a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其蕚芳馨譬解脫珠體本圓。",
        "from": "T46n1952_001:0984b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬法身。",
        "from": "T46n1952_001:0984b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其色瑩潔喻般若。",
        "from": "T46n1952_001:0984b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪體是寶如法身。",
        "from": "T46n1952_001:0984b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其用旋轉如解脫。",
        "from": "T46n1952_001:0984b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此三種各有三義。",
        "from": "T46n1952_001:0984b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取譬三德。",
        "from": "T46n1952_001:0984b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉一具三言三即一。",
        "from": "T46n1952_001:0984b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由詮此義。",
        "from": "T46n1952_001:0984b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統攝諸法超勝一切故稱為王。",
        "from": "T46n1952_001:0984b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮九界之惡持佛界之善。",
        "from": "T46n1952_001:0984b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名陀羅尼。",
        "from": "T46n1952_001:0984b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又實叉譯為祕密藏神呪。",
        "from": "T46n1952_001:0984b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟非三德三諦之法。",
        "from": "T46n1952_001:0984b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安受斯名乎。",
        "from": "T46n1952_001:0984b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩自行唯在空中。",
        "from": "T46n1952_001:0984b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化他從假赴物。",
        "from": "T46n1952_001:0984b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生於假受化。",
        "from": "T46n1952_001:0984b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化極亦唯空中。",
        "from": "T46n1952_001:0984b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故起信論云若離業識則無見相。",
        "from": "T46n1952_001:0984b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸佛法身無有。",
        "from": "T46n1952_001:0984b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼此色相迭相見故。",
        "from": "T46n1952_001:0984b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略辯如此。",
        "from": "T46n1952_001:0984b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲委知行相。",
        "from": "T46n1952_001:0984b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當尋玉泉止觀。",
        "from": "T46n1952_001:0984b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮讚第三　一切恭敬一心頂禮十方常住三寶(禮已長跪執爐燒香)我今如法嚴持香華。",
        "from": "T46n1952_001:0984b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養十方無邊法界諸佛世尊。",
        "from": "T46n1952_001:0984b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二部經三乘聖眾(執爐捧華運想已散之復云)供養已一切恭敬(起禮一拜曲躬讚云)。",
        "from": "T46n1952_001:0984b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來藏中　　有真法寶　　隨眾生性　感而遂通　　大悲大士　　聖觀自在　所說明呪　　號如意輪　　悉令滅除　無量苦厄　　亦能成就　　一切所求　是故釋迦　　慇懃讚揚　　諸陀羅尼　無為等者　　(陳意)一心頂禮本師釋迦牟尼世尊。",
        "from": "T46n1952_001:0984b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮極樂世界阿彌陀世尊。",
        "from": "T46n1952_001:0984b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方法界諸佛世尊。",
        "from": "T46n1952_001:0984b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮無障礙自在蓮華如意寶輪王陀羅尼。",
        "from": "T46n1952_001:0984b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方法界十二部經。",
        "from": "T46n1952_001:0984b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮觀自在菩薩摩訶薩。",
        "from": "T46n1952_001:0984b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮大勢至菩薩摩訶薩。",
        "from": "T46n1952_001:0984b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮圓滿意願明王諸大菩薩摩訶薩。",
        "from": "T46n1952_001:0984c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方法界三乘聖眾。",
        "from": "T46n1952_001:0984c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦第四　經云。",
        "from": "T46n1952_001:0984c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩白佛言。",
        "from": "T46n1952_001:0984c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今有大陀羅尼明呪。",
        "from": "T46n1952_001:0984c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂無障礙觀自在。",
        "from": "T46n1952_001:0984c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華如意寶輪王。",
        "from": "T46n1952_001:0984c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一希有能於一切所求之事。",
        "from": "T46n1952_001:0984c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心饒益皆得成就。",
        "from": "T46n1952_001:0984c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊大慈聽我說者。",
        "from": "T46n1952_001:0984c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當承佛威力施與眾生。",
        "from": "T46n1952_001:0984c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至世尊讚菩薩言。",
        "from": "T46n1952_001:0984c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是汝能悲愍諸有情類。",
        "from": "T46n1952_001:0984c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我加護汝。",
        "from": "T46n1952_001:0984c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩既蒙佛許悲願盈懷。",
        "from": "T46n1952_001:0984c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於佛前而說呪曰。",
        "from": "T46n1952_001:0984c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無佛馱耶　南無達摩耶　南無僧伽耶　南無觀自在菩薩摩訶薩具大悲心者　怛姪他　唵　斫羯羅伐底　震多末尼　莫訶鉢蹬謎　嚕嚕嚕嚕　底瑟侘(丑家切)篅(市傳切)攞阿羯利沙也　吽　癹沙訶(此名根本呪)　唵　鉢蹋摩　震多末尼　篅攞吽(此名大心呪)　唵　跋喇陀　鉢亶(多旱切)謎吽(此名隨心呪)爾時觀自在菩薩。",
        "from": "T46n1952_001:0984c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼已。",
        "from": "T46n1952_001:0984c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地六種震動。",
        "from": "T46n1952_001:0984c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍藥叉犍闥婆等。",
        "from": "T46n1952_001:0984c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有宮殿亦皆旋轉迷惑。",
        "from": "T46n1952_001:0984c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所依一切惡魔為障礙者。",
        "from": "T46n1952_001:0984c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見自宮殿皆悉焰起無不驚怖。",
        "from": "T46n1952_001:0984c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於地獄中受苦眾生。",
        "from": "T46n1952_001:0984c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉離苦得生天上。",
        "from": "T46n1952_001:0984c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺願第五　普為四恩三有法界眾生　悉願斷除三障。",
        "from": "T46n1952_001:0984c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命懺悔至心懺悔。",
        "from": "T46n1952_001:0984c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我比丘(某甲)歸命十方常住三寶。",
        "from": "T46n1952_001:0984c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼阿彌陀佛聖觀自在具大悲者。",
        "from": "T46n1952_001:0984c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願起哀憐為作明證。",
        "from": "T46n1952_001:0984c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為法界一切眾生。",
        "from": "T46n1952_001:0984c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始心性如摩尼寶。",
        "from": "T46n1952_001:0984c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自體清淨神用本然為諸如來同一祕藏。",
        "from": "T46n1952_001:0984c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄想流動幻有輪迴。",
        "from": "T46n1952_001:0984c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死中受諸熱惱。",
        "from": "T46n1952_001:0984c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂過現造積四重五逆十惡之業。",
        "from": "T46n1952_001:0984c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮阿鼻地獄之苦。",
        "from": "T46n1952_001:0985a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以惡業故現身所纏一切疾病種種災厄。",
        "from": "T46n1952_001:0985a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣如經說諸惡因緣。",
        "from": "T46n1952_001:0985a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今奉大悲聖觀自在教。",
        "from": "T46n1952_001:0985a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我誦持如意寶輪。",
        "from": "T46n1952_001:0985a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得滅除如是罪障。",
        "from": "T46n1952_001:0985a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千種事所願皆成。",
        "from": "T46n1952_001:0985a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願菩薩受我懺悔。",
        "from": "T46n1952_001:0985a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從我所求施與摩尼。",
        "from": "T46n1952_001:0985a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨諸珍寶世及出世福慧資糧。",
        "from": "T46n1952_001:0985a06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆使隨心無不充足。",
        "from": "T46n1952_001:0985a06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至盡其形壽不入胞胎。",
        "from": "T46n1952_001:0985a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生極樂世界。",
        "from": "T46n1952_001:0985a07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見阿彌陀佛觀自在菩薩真實色身。",
        "from": "T46n1952_001:0985a08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞妙法音證圓通性。",
        "from": "T46n1952_001:0985a09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後普門示現饒益有情。",
        "from": "T46n1952_001:0985a09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡出塵勞同成種智。",
        "from": "T46n1952_001:0985a10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無十方佛　南無十方法　南無十方僧　南無本師釋迦牟尼佛　南無阿彌陀佛　南無如意輪陀羅尼　南無觀世音菩薩　南無大勢至菩薩　南無圓滿願一切菩薩摩訶薩(或三稱或七稱)。",
        "from": "T46n1952_001:0985a11_0",
        "context_with_next_sentence": false
    }
]