[
    {
        "source_sentence": " 黃龍四家語錄序",
        "from": "X69n1340_001:0198a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言而足。",
        "from": "X69n1340_001:0198a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日言而盡道。",
        "from": "X69n1340_001:0198a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言而不足。",
        "from": "X69n1340_001:0198a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日言而盡物。",
        "from": "X69n1340_001:0198a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足與不足。",
        "from": "X69n1340_001:0198a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二理俱墮。",
        "from": "X69n1340_001:0198a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而世豈識之哉。",
        "from": "X69n1340_001:0198a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粤有黃龍四世孫惠泉禪師。",
        "from": "X69n1340_001:0198a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手錄積翠晦堂死心超宗四家語錄。",
        "from": "X69n1340_001:0198a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾予為序。",
        "from": "X69n1340_001:0198a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫四大士者。",
        "from": "X69n1340_001:0198a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大江之西。",
        "from": "X69n1340_001:0198a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪宗之有光焰者也。",
        "from": "X69n1340_001:0198a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或傳馬祖後身。",
        "from": "X69n1340_001:0198a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或拒大溈師席。",
        "from": "X69n1340_001:0198a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或雷電影響隨聲。",
        "from": "X69n1340_001:0198a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或六根勝熱不壞真風道譽。",
        "from": "X69n1340_001:0198a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下仰之。",
        "from": "X69n1340_001:0198a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機鋒一觸。",
        "from": "X69n1340_001:0198a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓶寫萬偈。",
        "from": "X69n1340_001:0198a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大空谷應無餘聲。",
        "from": "X69n1340_001:0198a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大圓鑑照無餘影。",
        "from": "X69n1340_001:0198a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "編珠織貝。",
        "from": "X69n1340_001:0198a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散落人間。",
        "from": "X69n1340_001:0198a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲堂月窻。",
        "from": "X69n1340_001:0198a12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬口稱誦。",
        "from": "X69n1340_001:0198a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨量小大。",
        "from": "X69n1340_001:0198a12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸有所得。",
        "from": "X69n1340_001:0198a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯言也。",
        "from": "X69n1340_001:0198a13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之盡物可乎。",
        "from": "X69n1340_001:0198a13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要之盡物盡道。",
        "from": "X69n1340_001:0198a13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞者自薦耳。",
        "from": "X69n1340_001:0198a13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有所謂終日言而未嘗言者。",
        "from": "X69n1340_001:0198a14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又非剝皮折骨之所能書也。",
        "from": "X69n1340_001:0198a14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則泉師之編次問答。",
        "from": "X69n1340_001:0198a15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是耶非耶。",
        "from": "X69n1340_001:0198a15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以之為是。",
        "from": "X69n1340_001:0198a15_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則毗盧藏中。",
        "from": "X69n1340_001:0198a16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大經卷。",
        "from": "X69n1340_001:0198a16_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而文字本不立。",
        "from": "X69n1340_001:0198a16_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以之為非。",
        "from": "X69n1340_001:0198a16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則尸居龍見。",
        "from": "X69n1340_001:0198a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淵默雷聲。",
        "from": "X69n1340_001:0198a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而音容本不忘。",
        "from": "X69n1340_001:0198a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是之與非。",
        "from": "X69n1340_001:0198a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特未定也。",
        "from": "X69n1340_001:0198a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯解是理。",
        "from": "X69n1340_001:0198a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有說無說。",
        "from": "X69n1340_001:0198a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是真如。",
        "from": "X69n1340_001:0198a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未解是理。",
        "from": "X69n1340_001:0198a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有說無說。",
        "from": "X69n1340_001:0198a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆墮邪見。",
        "from": "X69n1340_001:0198a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是知惠泉之心。",
        "from": "X69n1340_001:0198a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即四師之心也。",
        "from": "X69n1340_001:0198a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惠泉之見。",
        "from": "X69n1340_001:0198a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即四師之見也。",
        "from": "X69n1340_001:0198a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲乙其說。",
        "from": "X69n1340_001:0198a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用示方來。",
        "from": "X69n1340_001:0198a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以廣四師利物之仁。",
        "from": "X69n1340_001:0198a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由音聲入。",
        "from": "X69n1340_001:0198a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不嗇一己。",
        "from": "X69n1340_001:0198a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以傳四師行道之惠。",
        "from": "X69n1340_001:0198a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真祖師西來之本意也。",
        "from": "X69n1340_001:0198a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐進此道者。",
        "from": "X69n1340_001:0198a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試以此文",
        "from": "X69n1340_001:0198a22_10",
        "context_with_next_sentence": false
    }
]