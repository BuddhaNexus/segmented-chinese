[
    {
        "source_sentence": "明佛法根本碑",
        "from": "T46n1954_001:0988b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺大曼拏攞",
        "from": "T46n1954_001:0988b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨三藏智慧論述",
        "from": "T46n1954_001:0988b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛根本者。",
        "from": "T46n1954_001:0988b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄伽梵大毘盧遮那。",
        "from": "T46n1954_001:0988b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸佛所依。",
        "from": "T46n1954_001:0988b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法根本者。",
        "from": "T46n1954_001:0988b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言陀羅尼。",
        "from": "T46n1954_001:0988b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸法所依。",
        "from": "T46n1954_001:0988b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方法界塵剎海會一切如來果滿聖賢。",
        "from": "T46n1954_001:0988b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆依毘盧遮那淨妙法身。",
        "from": "T46n1954_001:0988c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現自他受用及變化身。",
        "from": "T46n1954_001:0988c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所詮教理皆真言陀羅尼門。",
        "from": "T46n1954_001:0988c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流演三藏教法。",
        "from": "T46n1954_001:0988c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既隨根性。",
        "from": "T46n1954_001:0988c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大小乘三藏。",
        "from": "T46n1954_001:0988c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各證戒定慧及蘊處界緣聖諦食等法。",
        "from": "T46n1954_001:0988c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂素怛覽比擿迦。",
        "from": "T46n1954_001:0988c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐言契經藏。",
        "from": "T46n1954_001:0988c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微奈耶比擿迦。",
        "from": "T46n1954_001:0988c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐言調伏藏。",
        "from": "T46n1954_001:0988c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿毘達磨比擿迦。",
        "from": "T46n1954_001:0988c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐言對法藏。",
        "from": "T46n1954_001:0988c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是契經律論藏。",
        "from": "T46n1954_001:0988c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故稱三藏。",
        "from": "T46n1954_001:0988c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言陀羅尼門一字具攝一切三藏教理行果。",
        "from": "T46n1954_001:0988c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若解一尊陀羅尼教。",
        "from": "T46n1954_001:0988c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即三藏陀羅尼者。",
        "from": "T46n1954_001:0988c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐言總持者。",
        "from": "T46n1954_001:0988c10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持一切惡法不生。",
        "from": "T46n1954_001:0988c10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持一切善法不滅。",
        "from": "T46n1954_001:0988c10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧却一切雜染之法。",
        "from": "T46n1954_001:0988c11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得清淨法界等流教法。",
        "from": "T46n1954_001:0988c11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言總藏持者。",
        "from": "T46n1954_001:0988c12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一字義中。",
        "from": "T46n1954_001:0988c12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟無量百千甚深妙義。",
        "from": "T46n1954_001:0988c12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行宣說逆順自在。",
        "from": "T46n1954_001:0988c13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言三摩地總持者。",
        "from": "T46n1954_001:0988c13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此陀羅尼故。",
        "from": "T46n1954_001:0988c14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地現前。",
        "from": "T46n1954_001:0988c14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟無量百千三摩地門。",
        "from": "T46n1954_001:0988c14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故菩薩常於六趣示現受生。",
        "from": "T46n1954_001:0988c15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被煩惱隨煩惱壞。",
        "from": "T46n1954_001:0988c16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證大神通。",
        "from": "T46n1954_001:0988c16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就利樂無邊有情。",
        "from": "T46n1954_001:0988c16_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言文字總持者。",
        "from": "T46n1954_001:0988c17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此陀羅尼。",
        "from": "T46n1954_001:0988c17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就於一字中所聞所誦無量蘇多羅。",
        "from": "T46n1954_001:0988c18_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不忘失。",
        "from": "T46n1954_001:0988c18_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知陀羅尼者。",
        "from": "T46n1954_001:0988c19_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍持三身大功德法佛之法性法住法界。",
        "from": "T46n1954_001:0988c19_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持諸法也。",
        "from": "T46n1954_001:0988c20_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世如來皆依此門而成正覺。",
        "from": "T46n1954_001:0988c20_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若樂修行者。",
        "from": "T46n1954_001:0988c21_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應從瑜珈阿闍梨。",
        "from": "T46n1954_001:0988c21_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發無上大菩提心。",
        "from": "T46n1954_001:0988c22_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受三摩耶戒。",
        "from": "T46n1954_001:0988c22_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大曼拏攞得灌頂者。",
        "from": "T46n1954_001:0988c22_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然許授受修行也。",
        "from": "T46n1954_001:0988c23_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大毘盧遮那一切如來五智灌頂。",
        "from": "T46n1954_001:0988c23_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹阿闍梨位。",
        "from": "T46n1954_001:0988c24_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方可傳教也。",
        "from": "T46n1954_001:0988c24_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂者冊命受位之義。",
        "from": "T46n1954_001:0988c25_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受佛智體金剛名號。",
        "from": "T46n1954_001:0988c25_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此已後。",
        "from": "T46n1954_001:0988c26_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受得廣大甚深不思議法。",
        "from": "T46n1954_001:0988c26_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超越二乘十地。",
        "from": "T46n1954_001:0988c27_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名大金剛薩埵。",
        "from": "T46n1954_001:0988c27_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨者。",
        "from": "T46n1954_001:0988c27_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹佛傳法。",
        "from": "T46n1954_001:0988c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行如來事。",
        "from": "T46n1954_001:0988c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修佛身密之戒律。",
        "from": "T46n1954_001:0988c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持佛語密之真言。",
        "from": "T46n1954_001:0988c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依佛心密之正智。",
        "from": "T46n1954_001:0988c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為有情三密之度門。",
        "from": "T46n1954_001:0988c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成無上三身之果位。",
        "from": "T46n1954_001:0989a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示教示歸。",
        "from": "T46n1954_001:0989a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首世尊大慈悲者。",
        "from": "T46n1954_001:0989a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開演法門無教。",
        "from": "T46n1954_001:0989a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯乃普應群心。",
        "from": "T46n1954_001:0989a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大略八萬四千。",
        "from": "T46n1954_001:0989a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總攝在其三藏。",
        "from": "T46n1954_001:0989a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未入正法者。",
        "from": "T46n1954_001:0989a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令入正法。",
        "from": "T46n1954_001:0989a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說修多羅藏也。",
        "from": "T46n1954_001:0989a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入正法者。",
        "from": "T46n1954_001:0989a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令受持學處。",
        "from": "T46n1954_001:0989a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說微奈耶藏。",
        "from": "T46n1954_001:0989a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已受持學處者。",
        "from": "T46n1954_001:0989a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令通達諸法真實性相。",
        "from": "T46n1954_001:0989a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說阿毘達磨藏。",
        "from": "T46n1954_001:0989a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既隨根性。",
        "from": "T46n1954_001:0989a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有大小乘三藏。",
        "from": "T46n1954_001:0989a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各詮戒定慧學。",
        "from": "T46n1954_001:0989a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教信解。",
        "from": "T46n1954_001:0989a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行相應。",
        "from": "T46n1954_001:0989a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證成其果。",
        "from": "T46n1954_001:0989a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小即四果三覺。",
        "from": "T46n1954_001:0989a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大即地前十地。",
        "from": "T46n1954_001:0989a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是佛說。",
        "from": "T46n1954_001:0989a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸指佛心。",
        "from": "T46n1954_001:0989a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有最上乘三藏。",
        "from": "T46n1954_001:0989a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名佛乘。",
        "from": "T46n1954_001:0989a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓開灌頂超昇等妙之尊。",
        "from": "T46n1954_001:0989a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三密四印相應。",
        "from": "T46n1954_001:0989a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓證三身佛果。",
        "from": "T46n1954_001:0989a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指歸曰。",
        "from": "T46n1954_001:0989a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一乘三藏　　佛法根源　　大覺開示　灌頂相傳　　覺入悟入　　三業清堅　受佛等戒　　上如來禪　　真言慧解　知見無邊　　分明了了　　月滿珠圓　普周無盡　　利樂隨緣此教有十萬誐他。",
        "from": "T46n1954_001:0989a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂傳受。",
        "from": "T46n1954_001:0989a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切如來三密內證同體加持。",
        "from": "T46n1954_001:0989a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一修行。",
        "from": "T46n1954_001:0989a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師指授。",
        "from": "T46n1954_001:0989a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發一心是諸佛心。",
        "from": "T46n1954_001:0989a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修一行是諸佛行。",
        "from": "T46n1954_001:0989a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟一法總持諸法了。",
        "from": "T46n1954_001:0989a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法共依一演。",
        "from": "T46n1954_001:0989a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一字生無量字入一字。",
        "from": "T46n1954_001:0989a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字體本空。",
        "from": "T46n1954_001:0989a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實性無窮。",
        "from": "T46n1954_001:0989a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執持情剎。",
        "from": "T46n1954_001:0989a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法佛真宮。",
        "from": "T46n1954_001:0989a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊聖會。",
        "from": "T46n1954_001:0989a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互即重重。",
        "from": "T46n1954_001:0989a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或收或教。",
        "from": "T46n1954_001:0989a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊圓月貫。",
        "from": "T46n1954_001:0989a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心鏡照明。",
        "from": "T46n1954_001:0989a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提果滿。",
        "from": "T46n1954_001:0989a24_1",
        "context_with_next_sentence": true
    },
