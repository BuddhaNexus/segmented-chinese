[
    {
        "source_sentence": "十八契印",
        "from": "T18n0900_001:0781c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師獲灌頂。",
        "from": "T18n0900_001:0781c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既蒙印可已不久當成就。",
        "from": "T18n0900_001:0781c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子具此相方可為傳授此。",
        "from": "T18n0900_001:0781c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如意寶。",
        "from": "T18n0900_001:0781c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成就諸事業。",
        "from": "T18n0900_001:0781c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經說處所。",
        "from": "T18n0900_001:0781c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山間及流水清淨阿蘭若隨樂之澗谷。",
        "from": "T18n0900_001:0781c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸厄怖難。",
        "from": "T18n0900_001:0781c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力嚴供具。",
        "from": "T18n0900_001:0781c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人面於本方拜禮本尊。",
        "from": "T18n0900_001:0781c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮餘方佛。",
        "from": "T18n0900_001:0781c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五輪著地。",
        "from": "T18n0900_001:0781c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如教之敬禮。",
        "from": "T18n0900_001:0781c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙膝長跪已。",
        "from": "T18n0900_001:0781c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌虛心住誠心。",
        "from": "T18n0900_001:0781c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡說陳三業一切罪。",
        "from": "T18n0900_001:0782a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從過去世流轉於生死。",
        "from": "T18n0900_001:0782a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今對大聖尊盡心而懺悔。",
        "from": "T18n0900_001:0782a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如先佛所懺我今如亦是。",
        "from": "T18n0900_001:0782a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂加持力眾生悉清淨。",
        "from": "T18n0900_001:0782a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此大願故自他獲無垢。",
        "from": "T18n0900_001:0782a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密言曰。",
        "from": "T18n0900_001:0782a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩(二合)婆嚩輸馱薩嚩達磨薩嚩(二合)婆嚩輸度唅次對本尊前。",
        "from": "T18n0900_001:0782a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐或半跏趺坐。",
        "from": "T18n0900_001:0782a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大悲心。",
        "from": "T18n0900_001:0782a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我修此法為一切眾生。",
        "from": "T18n0900_001:0782a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證無上正等菩提。",
        "from": "T18n0900_001:0782a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先磨諸香以用塗手。",
        "from": "T18n0900_001:0782a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結於佛部三昧耶陀羅尼印。",
        "from": "T18n0900_001:0782a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手虛心合掌。",
        "from": "T18n0900_001:0782a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開二頭指屈輔二中指上節。",
        "from": "T18n0900_001:0782a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指屈輔二頭指下節。",
        "from": "T18n0900_001:0782a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印成。",
        "from": "T18n0900_001:0782a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置印當心想於如來三十二相八十種好。",
        "from": "T18n0900_001:0782a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分明如對目前。",
        "from": "T18n0900_001:0782a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心誦真言七遍。",
        "from": "T18n0900_001:0782a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0782a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵怛他(引)蘖都納婆(二合)嚩(引)也娑嚩(二合引)訶(引)由結此印及誦真言故。",
        "from": "T18n0900_001:0782a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即警覺一切如來。",
        "from": "T18n0900_001:0782a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉當護念加持行者。",
        "from": "T18n0900_001:0782a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以光明照觸。",
        "from": "T18n0900_001:0782a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪障皆得消滅。",
        "from": "T18n0900_001:0782a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命長遠福慧增長。",
        "from": "T18n0900_001:0782a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部聖眾擁護歡喜。",
        "from": "T18n0900_001:0782a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世離諸惡趣。",
        "from": "T18n0900_001:0782a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生速證無上正等菩提。",
        "from": "T18n0900_001:0782a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次蓮華部三昧耶　以二手虛心合掌。",
        "from": "T18n0900_001:0782a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散開二頭指二中指二無名指。",
        "from": "T18n0900_001:0782a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈如蓮華形安於當心。",
        "from": "T18n0900_001:0782a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想觀自在菩薩相好具足。",
        "from": "T18n0900_001:0782a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言七遍於頂右散真言曰。",
        "from": "T18n0900_001:0782a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵跛娜謨(二合)納婆(二合)嚩(引)也娑嚩(二合引)訶(引)由結此印及誦真言故。",
        "from": "T18n0900_001:0782a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即警覺觀自在菩薩等持蓮華部聖眾。",
        "from": "T18n0900_001:0782a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆歡喜加持護念。",
        "from": "T18n0900_001:0782a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩光明照觸。",
        "from": "T18n0900_001:0782a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有業障皆得除滅。",
        "from": "T18n0900_001:0782a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩常為善友。",
        "from": "T18n0900_001:0782a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛部三昧耶印　以左手翻掌向外。",
        "from": "T18n0900_001:0782b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手掌背安左手背。",
        "from": "T18n0900_001:0782b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用左右大指小指。",
        "from": "T18n0900_001:0782b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相鉤如金剛杵形。",
        "from": "T18n0900_001:0782b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置於當心想金剛手菩薩。",
        "from": "T18n0900_001:0782b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言七遍。",
        "from": "T18n0900_001:0782b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂上左散之。",
        "from": "T18n0900_001:0782b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0782b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日盧(二合)納婆(二合)嚩(引)也娑嚩(二合)訶(引)由結此印及誦真言故。",
        "from": "T18n0900_001:0782b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即警覺一切金剛部聖眾。",
        "from": "T18n0900_001:0782b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持擁護。",
        "from": "T18n0900_001:0782b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪障皆悉除滅。",
        "from": "T18n0900_001:0782b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切病苦痛不著身。",
        "from": "T18n0900_001:0782b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得金剛堅固之體。",
        "from": "T18n0900_001:0782b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結護身三昧耶　以二手內相叉右押左。",
        "from": "T18n0900_001:0782b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二手中指。",
        "from": "T18n0900_001:0782b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二頭指如鉤形。",
        "from": "T18n0900_001:0782b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中指背勿令相著。",
        "from": "T18n0900_001:0782b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並二大指押無名指即成。",
        "from": "T18n0900_001:0782b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印身五處。",
        "from": "T18n0900_001:0782b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂額。",
        "from": "T18n0900_001:0782b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次右肩。",
        "from": "T18n0900_001:0782b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次左肩。",
        "from": "T18n0900_001:0782b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次心。",
        "from": "T18n0900_001:0782b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次喉。",
        "from": "T18n0900_001:0782b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散。",
        "from": "T18n0900_001:0782b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦真言一遍。",
        "from": "T18n0900_001:0782b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0782b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅(二合)銀儞(二合)鉢囉(二合引)捻跛跢(二合引)也娑嚩(二合)訶(引)由結此印及誦真言加持故即成被金剛甲冑。",
        "from": "T18n0900_001:0782b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有毘那夜迦及諸天魔。",
        "from": "T18n0900_001:0782b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作障礙者退散馳走。",
        "from": "T18n0900_001:0782b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉是見行者光明被身威德自在。",
        "from": "T18n0900_001:0782b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若居山林及在險難皆悉無畏。",
        "from": "T18n0900_001:0782b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火等災一切厄難。",
        "from": "T18n0900_001:0782b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎狼獅子刀杖枷鎖如是等事皆悉消滅。",
        "from": "T18n0900_001:0782b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者歡喜命終已後不墮惡趣。",
        "from": "T18n0900_001:0782b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生諸佛淨妙國土。",
        "from": "T18n0900_001:0782b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結地界真言印　右無名指入左無名指小指內。",
        "from": "T18n0900_001:0782b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右中指入左中指頭指內。",
        "from": "T18n0900_001:0782b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左亦如之。",
        "from": "T18n0900_001:0782b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘指並頭相拄。",
        "from": "T18n0900_001:0782b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想印成火焰金剛杵形。",
        "from": "T18n0900_001:0782b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指著地掣之。",
        "from": "T18n0900_001:0782b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一掣一誦至三便止。",
        "from": "T18n0900_001:0782b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意大小標心。",
        "from": "T18n0900_001:0782b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成堅固地界。",
        "from": "T18n0900_001:0782b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0782b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵枳里枳里縛日羅(二合引)縛日里(二合)部律(二合半音)滿馱滿駄吽發吒(半音)由結此印及誦真言加持地界故。",
        "from": "T18n0900_001:0782b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至水際如金剛座。",
        "from": "T18n0900_001:0782c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天魔及諸障者不為惱害。",
        "from": "T18n0900_001:0782c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少加功力速得成就。",
        "from": "T18n0900_001:0782c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結方隅金剛牆真言印　準前地界印。",
        "from": "T18n0900_001:0782c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開二大指竪之側如牆形。",
        "from": "T18n0900_001:0782c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想印如金剛杵形。",
        "from": "T18n0900_001:0782c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右遶身三轉標心大小。",
        "from": "T18n0900_001:0782c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成金剛堅固之城。",
        "from": "T18n0900_001:0782c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩尚不違越。",
        "from": "T18n0900_001:0782c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況諸餘難調伏者。",
        "from": "T18n0900_001:0782c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦。",
        "from": "T18n0900_001:0782c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及毒蟲利牙爪者不能輔近。",
        "from": "T18n0900_001:0782c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0782c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩羅薩羅縛日羅(二合)鉢羅(二合)迦(引)羅吽(引)發吒(半音)行者次應想。",
        "from": "T18n0900_001:0782c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇中八葉大蓮華上有獅子座。",
        "from": "T18n0900_001:0782c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座上有七寶樓閣。",
        "from": "T18n0900_001:0782c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂諸瓔珞繒綵幡蓋寶柱行列。",
        "from": "T18n0900_001:0782c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂妙天衣周布香雲。",
        "from": "T18n0900_001:0782c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普雨雜花奏諸音樂。",
        "from": "T18n0900_001:0782c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶瓶閼伽天妙飲食摩尼為燈作此觀已而誦此偈。",
        "from": "T18n0900_001:0782c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以我功德力　　如來加持力",
        "from": "T18n0900_001:0782c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　及以法界力　　普供養而住",
        "from": "T18n0900_001:0782c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此偈已。",
        "from": "T18n0900_001:0782c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結大虛空藏普通供養印　以二手合掌。",
        "from": "T18n0900_001:0782c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二中指外相叉。",
        "from": "T18n0900_001:0782c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二頭指相柱。",
        "from": "T18n0900_001:0782c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反蹙如寶形。",
        "from": "T18n0900_001:0782c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印成已誦真言四遍。",
        "from": "T18n0900_001:0782c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普通供養真言曰。",
        "from": "T18n0900_001:0782c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵誐誐曩三(去)婆(去)",
        "from": "T18n0900_001:0782c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由誦此真言加持故。",
        "from": "T18n0900_001:0782c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所想供養供具真實無異。",
        "from": "T18n0900_001:0782c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切賢聖眾皆得受用。",
        "from": "T18n0900_001:0782c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應結寶車輅印　二手內相叉仰掌。",
        "from": "T18n0900_001:0782c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指橫相柱。",
        "from": "T18n0900_001:0782c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指各捻頭指根下。",
        "from": "T18n0900_001:0782c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想七寶車輅金剛駕御寶車。",
        "from": "T18n0900_001:0782c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘空而去至於本尊極樂世界。",
        "from": "T18n0900_001:0782c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T18n0900_001:0782c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0782c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵都嚕都嚕吽由此真言印加持故。",
        "from": "T18n0900_001:0782c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶車輅至本尊國土。",
        "from": "T18n0900_001:0783a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想本尊及諸聖眾眷屬圍繞乘寶車輅。",
        "from": "T18n0900_001:0783a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於道場虛空而住。",
        "from": "T18n0900_001:0783a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結請車輅印　準前印。",
        "from": "T18n0900_001:0783a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指向身。",
        "from": "T18n0900_001:0783a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撥中指頭。",
        "from": "T18n0900_001:0783a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T18n0900_001:0783a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0783a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜麼悉底羅野(四合)地尾(二合)迦(引)喃(引)(一)怛他(引)蘖多(引)南(引)(二)唵嚩日朗(二合)銀儞野(二合引)羯利沙(二合)也娑嚩(二合引)訶(引)由結此真言印加持故。",
        "from": "T18n0900_001:0783a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾從本土來至道場空中而住。",
        "from": "T18n0900_001:0783a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結請本尊三昧耶降至於道場印。",
        "from": "T18n0900_001:0783a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內相叉作拳。",
        "from": "T18n0900_001:0783a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左大母指入掌。",
        "from": "T18n0900_001:0783a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次右大母指向身招之真言曰。",
        "from": "T18n0900_001:0783a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵爾曩爾迦(半音)唵阿盧力迦(半音)唵嚩日羅特勒迦(半音)阿蘖車阿蘖車娑嚩(二合)訶由此真言印加持故。",
        "from": "T18n0900_001:0783a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊不越本誓故。",
        "from": "T18n0900_001:0783a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即赴集於道場。",
        "from": "T18n0900_001:0783a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應辟除諸作障者。",
        "from": "T18n0900_001:0783a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結蓮華部明王馬頭觀自在菩薩真言印。",
        "from": "T18n0900_001:0783a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌。",
        "from": "T18n0900_001:0783a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二頭指二無名指。",
        "from": "T18n0900_001:0783a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於掌內甲相背。",
        "from": "T18n0900_001:0783a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪開二大指。",
        "from": "T18n0900_001:0783a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印左轉三匝。",
        "from": "T18n0900_001:0783a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想辟除諸作障者。",
        "from": "T18n0900_001:0783a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸魔見此印已。",
        "from": "T18n0900_001:0783a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退散馳走。",
        "from": "T18n0900_001:0783a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印右旋三匝。",
        "from": "T18n0900_001:0783a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成堅固火界。",
        "from": "T18n0900_001:0783a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0783a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿蜜里(二合)都納皤(二合)嚩吽發吒(半音)娑嚩(二合)訶次結上方金剛網印　準前牆印二大指捻二頭指下節。",
        "from": "T18n0900_001:0783a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T18n0900_001:0783a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上右轉三匝便止。",
        "from": "T18n0900_001:0783a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0783a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾娑普(二合)羅捺落(二合)乞叉(二合)嚩日羅(二合)半惹羅吽發吒由此網印真言加持故。",
        "from": "T18n0900_001:0783a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成金剛堅固不壞之網。",
        "from": "T18n0900_001:0783b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結火院密縫印　以左手掩右手背。",
        "from": "T18n0900_001:0783b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二大指誦真言三遍。",
        "from": "T18n0900_001:0783b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞身三匝。",
        "from": "T18n0900_001:0783b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想金剛牆外火院圍繞。",
        "from": "T18n0900_001:0783b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0783b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿三莽擬儞(二合)吽發吒",
        "from": "T18n0900_001:0783b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻閼伽香水真言印　二手捧器。",
        "from": "T18n0900_001:0783b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想浴聖眾足。",
        "from": "T18n0900_001:0783b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T18n0900_001:0783b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0783b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱(引)南(引)誐誐曩娑莽(引)娑莽娑嚩(二合引)訶(引)由獻閼伽香水故。",
        "from": "T18n0900_001:0783b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者三業清淨洗滌煩惱垢。",
        "from": "T18n0900_001:0783b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結獻蓮華座印　二手虛心合掌。",
        "from": "T18n0900_001:0783b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒開左右無名指中指頭指屈如微敷蓮華形。",
        "from": "T18n0900_001:0783b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在寶樓閣內。",
        "from": "T18n0900_001:0783b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想諸聖眾及本尊各坐本位。",
        "from": "T18n0900_001:0783b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眷屬圍繞了了分明。",
        "from": "T18n0900_001:0783b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T18n0900_001:0783b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0783b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦麼攞娑嚩(二合引)訶(引)由結花座印誦真言故。",
        "from": "T18n0900_001:0783b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者當得十地滿足。",
        "from": "T18n0900_001:0783b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得金剛之座。",
        "from": "T18n0900_001:0783b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結普供養印　二手合掌。",
        "from": "T18n0900_001:0783b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右押左交指即成。",
        "from": "T18n0900_001:0783b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T18n0900_001:0783b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想無量無邊塗香雲海花鬘雲海燒香雲海飲食燈明等雲海。",
        "from": "T18n0900_001:0783b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆成清淨廣多供養普供養。",
        "from": "T18n0900_001:0783b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0900_001:0783b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱(引)南薩縛他(引)欠搵娜蘖底娑頗(二合)羅呬[牟*含]誐誐曩(引)劍娑嚩(二合)訶(引)十八契印者。",
        "from": "T18n0900_001:0783b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳云惠果和尚製。",
        "from": "T18n0900_001:0783b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或云弘法大師作。",
        "from": "T18n0900_001:0783b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今按三十帖冊子目錄云。",
        "from": "T18n0900_001:0783b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聖歡喜天經一卷(不空譯末有十八道頸次第)。",
        "from": "T18n0900_001:0783b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "T18n0900_001:0783b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵字十八道真言。",
        "from": "T18n0900_001:0783b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此思之。",
        "from": "T18n0900_001:0783b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師據件二本記之乎。",
        "from": "T18n0900_001:0783b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八契印生起略頌(就生起意)。",
        "from": "T18n0900_001:0783c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一莊嚴行者五種　　淨佛蓮金及被甲　二者結界法二種　　一地結二金剛牆　三者莊嚴道場二　　道場虛空普供養　四者勸請法三種　　送車請車亦奉請　五者結護法三種　　當部明王網火院　六者供養法三種　　閼伽花座普供養　初二供養別供也　　唯別奉獻本尊供　後一供養總供也　　獻本尊及諸聖眾　總六別十八軌則　　是名十八契印耳　生起次第如何者　　欲入祕密總持門　先須調淨莊嚴身　　既身調淨莊嚴者　亦應加持淨界地　　既界地加持事修者　當須莊嚴於道場　　既亦道場莊嚴者　應請本尊大聖尊　　既得奉請聖尊者　勇猛精進結護法　　結護內外無障礙　然後當致供養也　　不起于座成悉地",
        "from": "T18n0900_001:0783c02_0",
        "context_with_next_sentence": false
    }
]