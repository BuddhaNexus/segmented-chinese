[
    {
        "source_sentence": "廬山蓮宗寶鑑念佛正報卷第九",
        "from": "T47n1973_009:0341c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛正報說",
        "from": "T47n1973_009:0341c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因修白業果感淨方。",
        "from": "T47n1973_009:0341c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化佛引上金臺聖賢迎歸樂國。",
        "from": "T47n1973_009:0341c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高超三界逈出四流。",
        "from": "T47n1973_009:0341c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業盡塵消亡情絕慮。",
        "from": "T47n1973_009:0341c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "質托蓮苞之內神遊寶界之中。",
        "from": "T47n1973_009:0341c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面奉阿彌陀佛為本師。",
        "from": "T47n1973_009:0341c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見觀音勢至為親友。",
        "from": "T47n1973_009:0341c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨海眾大會寶池。",
        "from": "T47n1973_009:0341c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九品勝流各說本行。",
        "from": "T47n1973_009:0341c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五香拂體三德嚴身。",
        "from": "T47n1973_009:0341c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫扇微風聆眾音之演法。",
        "from": "T47n1973_009:0341c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繽紛花雨覩焰網之舒光。",
        "from": "T47n1973_009:0341c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縹緲雲霞近浮神足輕。",
        "from": "T47n1973_009:0341c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盈衣裓盛接妙華。",
        "from": "T47n1973_009:0341c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨謁慈顏得法印而還國。",
        "from": "T47n1973_009:0341c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暮遊金剎聽玉偈以逍遙。",
        "from": "T47n1973_009:0341c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑞蓮初綻為遣殘殃。",
        "from": "T47n1973_009:0341c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "新學化生行成不退。",
        "from": "T47n1973_009:0341c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈惟近忘麁苦抑亦佛果非遙。",
        "from": "T47n1973_009:0341c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戲翫瓊林灌沐德水百寶之樓閣華麗七重之行樹森嚴。",
        "from": "T47n1973_009:0341c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景序長春地平如掌。",
        "from": "T47n1973_009:0342a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣食隨念而至。",
        "from": "T47n1973_009:0342a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天樂不鼓自鳴受用。",
        "from": "T47n1973_009:0342a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出於自然快樂。",
        "from": "T47n1973_009:0342a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實非人世諸天萬億倍不可比論。",
        "from": "T47n1973_009:0342a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛恒河沙悉皆稱讚。",
        "from": "T47n1973_009:0342a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身具光明妙相跡踐聖道香階。",
        "from": "T47n1973_009:0342a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命難量悲願無盡。",
        "from": "T47n1973_009:0342a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨兩重生死既非果趣之身。",
        "from": "T47n1973_009:0342a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲本際常光離去來之相。",
        "from": "T47n1973_009:0342a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣強德勝皆由念佛心生。",
        "from": "T47n1973_009:0342a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福備壽長盡是淨因感報。",
        "from": "T47n1973_009:0342a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知佛有攝生之願。",
        "from": "T47n1973_009:0342a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生有感佛之因。",
        "from": "T47n1973_009:0342a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是勝緣起於信願。",
        "from": "T47n1973_009:0342a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以斯妙果成就正依。",
        "from": "T47n1973_009:0342a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或禪誦七寶池邊。",
        "from": "T47n1973_009:0342a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或經行黃金地上。",
        "from": "T47n1973_009:0342a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飽禪悅法喜珍味。",
        "from": "T47n1973_009:0342a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掛慈悲喜捨天衣。",
        "from": "T47n1973_009:0342a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德資神增加悲智。",
        "from": "T47n1973_009:0342a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍容辦道長養聖胎。",
        "from": "T47n1973_009:0342a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入無生門。",
        "from": "T47n1973_009:0342a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便登菩薩之位。",
        "from": "T47n1973_009:0342a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿跋致不退菩提之心。",
        "from": "T47n1973_009:0342a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住法王家盡授如來之記。",
        "from": "T47n1973_009:0342a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞大乘法同稱補處之尊。",
        "from": "T47n1973_009:0342a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念虛玄心心靜慮。",
        "from": "T47n1973_009:0342a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得三昧正定具六種神通。",
        "from": "T47n1973_009:0342a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻供十方往來無礙。",
        "from": "T47n1973_009:0342a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分身億剎不失定心。",
        "from": "T47n1973_009:0342a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洒法水於三千出眾生於火宅。",
        "from": "T47n1973_009:0342a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他兼利行願周圓。",
        "from": "T47n1973_009:0342a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂百千三昧盡唯心。",
        "from": "T47n1973_009:0342a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德莊嚴歸自己。",
        "from": "T47n1973_009:0342a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德莊嚴",
        "from": "T47n1973_009:0342a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大彌陀經菩薩功德章云。",
        "from": "T47n1973_009:0342a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往生彼國者皆悉容貌柔和相好具足。",
        "from": "T47n1973_009:0342a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定智慧通達無礙。",
        "from": "T47n1973_009:0342a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通威德無不圓滿。",
        "from": "T47n1973_009:0342a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深入法門具無生忍。",
        "from": "T47n1973_009:0342a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛祕藏究竟明了。",
        "from": "T47n1973_009:0342a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏諸根身心柔軟。",
        "from": "T47n1973_009:0342a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安然寂靜盡般泥洹。",
        "from": "T47n1973_009:0342a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深入正慧無有餘習。",
        "from": "T47n1973_009:0342a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依佛所行七覺聖道。",
        "from": "T47n1973_009:0342a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行五眼照真達俗。",
        "from": "T47n1973_009:0342a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯才總持自在無礙。",
        "from": "T47n1973_009:0342a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善解世間無邊方便。",
        "from": "T47n1973_009:0342a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言誠諦深入義味。",
        "from": "T47n1973_009:0342a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敷演正法度諸有情。",
        "from": "T47n1973_009:0342a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等觀三界空無所有。",
        "from": "T47n1973_009:0342a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知一切法無相無為。",
        "from": "T47n1973_009:0342a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無取無捨遠離顛倒。",
        "from": "T47n1973_009:0342a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅固不動如須彌山。",
        "from": "T47n1973_009:0342a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智明如日廣大如海出功德寶。",
        "from": "T47n1973_009:0342a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熾盛如火燒煩惱薪。",
        "from": "T47n1973_009:0342b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍辱如地一切平等。",
        "from": "T47n1973_009:0342b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨如水洗諸塵垢。",
        "from": "T47n1973_009:0342b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如虛空無邊不障一切故。",
        "from": "T47n1973_009:0342b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蓮花出水離一切染故。",
        "from": "T47n1973_009:0342b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雷震響出法音故。",
        "from": "T47n1973_009:0342b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲靉靆降法雨故。",
        "from": "T47n1973_009:0342b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如風動樹發菩提芽故。",
        "from": "T47n1973_009:0342b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如牛王聲異眾牛故。",
        "from": "T47n1973_009:0342b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如龍象威難可測故。",
        "from": "T47n1973_009:0342b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如良馬行乘無失故。",
        "from": "T47n1973_009:0342b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如獅子王無怖畏故。",
        "from": "T47n1973_009:0342b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如尼拘律樹覆蔭大故。",
        "from": "T47n1973_009:0342b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如優鉢羅華難值遇故。",
        "from": "T47n1973_009:0342b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛杵破邪山故。",
        "from": "T47n1973_009:0342b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如梵王身生梵眾故。",
        "from": "T47n1973_009:0342b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金翅鳥勝毒龍故。",
        "from": "T47n1973_009:0342b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如空中禽無住跡故。",
        "from": "T47n1973_009:0342b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雪山照功德淨故。",
        "from": "T47n1973_009:0342b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如慈氏觀法界等故。",
        "from": "T47n1973_009:0342b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專樂求法心無厭足。",
        "from": "T47n1973_009:0342b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常欲廣說志無疲倦。",
        "from": "T47n1973_009:0342b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊法鼓建法幢。",
        "from": "T47n1973_009:0342b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曜慧日除癡冥修六和敬。",
        "from": "T47n1973_009:0342b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為師導為世明燈。",
        "from": "T47n1973_009:0342b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝福田以安群生。",
        "from": "T47n1973_009:0342b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功慧殊勝莫不尊重。",
        "from": "T47n1973_009:0342b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養無量諸佛。",
        "from": "T47n1973_009:0342b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為諸佛所共讚嘆。",
        "from": "T47n1973_009:0342b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟菩薩諸波羅蜜。",
        "from": "T47n1973_009:0342b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離聲聞緣覺之地。",
        "from": "T47n1973_009:0342b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T47n1973_009:0342b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸菩薩以念佛故。",
        "from": "T47n1973_009:0342b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就如是無量功德。",
        "from": "T47n1973_009:0342b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我但為汝舉要言之。",
        "from": "T47n1973_009:0342b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若廣說者雖盡億劫不能窮盡。",
        "from": "T47n1973_009:0342b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土增修聖果",
        "from": "T47n1973_009:0342b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大彌陀經云。",
        "from": "T47n1973_009:0342b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸念佛人生淨土已。",
        "from": "T47n1973_009:0342b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入七寶池中澡雪形體。",
        "from": "T47n1973_009:0342b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蕩滌情慮各座一華上。",
        "from": "T47n1973_009:0342b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然微風吹動諸寶行樹。",
        "from": "T47n1973_009:0342b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出微妙音散諸寶華。",
        "from": "T47n1973_009:0342b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異香芬馥皆作佛事。",
        "from": "T47n1973_009:0342b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞者喜悅無量。",
        "from": "T47n1973_009:0342b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然心開各往修進。",
        "from": "T47n1973_009:0342b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地講經者。",
        "from": "T47n1973_009:0342b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地誦經者。",
        "from": "T47n1973_009:0342b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地說經者。",
        "from": "T47n1973_009:0342b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地口授經者。",
        "from": "T47n1973_009:0342b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地聽經者。",
        "from": "T47n1973_009:0342b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地念經者。",
        "from": "T47n1973_009:0342b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地思道者。",
        "from": "T47n1973_009:0342b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地坐禪一心者。",
        "from": "T47n1973_009:0342b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在地經行者。",
        "from": "T47n1973_009:0342b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中講經者。",
        "from": "T47n1973_009:0342b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中誦經者。",
        "from": "T47n1973_009:0342b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中說經者。",
        "from": "T47n1973_009:0342b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中口授經者。",
        "from": "T47n1973_009:0342b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中聽經者。",
        "from": "T47n1973_009:0342b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中。",
        "from": "T47n1973_009:0342c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念經者。",
        "from": "T47n1973_009:0342c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中思道者。",
        "from": "T47n1973_009:0342c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中坐禪一心者。",
        "from": "T47n1973_009:0342c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有在虛空中經行者。",
        "from": "T47n1973_009:0342c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其間聲聞弟子皆發大心。",
        "from": "T47n1973_009:0342c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有未得聖果者。",
        "from": "T47n1973_009:0342c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因是而得聖果。",
        "from": "T47n1973_009:0342c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有未得不退轉地者。",
        "from": "T47n1973_009:0342c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因是而得不退轉地。",
        "from": "T47n1973_009:0342c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩各隨其資而有所得。",
        "from": "T47n1973_009:0342c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不忻然適意而悅。",
        "from": "T47n1973_009:0342c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊戲三昧利樂有情。",
        "from": "T47n1973_009:0342c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由念佛之堅心稱彌陀之本願。",
        "from": "T47n1973_009:0342c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往生佛子同列此班。",
        "from": "T47n1973_009:0342c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧辯才神通如意風帆勢順速證菩提。",
        "from": "T47n1973_009:0342c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超萬劫之輪迴。",
        "from": "T47n1973_009:0342c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得諸天之仰重。",
        "from": "T47n1973_009:0342c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨業勝善大果昭然。",
        "from": "T47n1973_009:0342c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄語同流無忘此事。",
        "from": "T47n1973_009:0342c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蝡動蜎飛猶有分。",
        "from": "T47n1973_009:0342c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大丈夫兒當勉旃。",
        "from": "T47n1973_009:0342c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土三十益",
        "from": "T47n1973_009:0342c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台智者大師淨土群疑論云。",
        "from": "T47n1973_009:0342c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生西方者有三十種益。",
        "from": "T47n1973_009:0342c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一往生佛土益。",
        "from": "T47n1973_009:0342c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二得大法樂益。",
        "from": "T47n1973_009:0342c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三親近諸佛益。",
        "from": "T47n1973_009:0342c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四遊歷十方供佛益。",
        "from": "T47n1973_009:0342c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五親聞佛說益。",
        "from": "T47n1973_009:0342c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六福慧資糧疾得圓滿益。",
        "from": "T47n1973_009:0342c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七速證菩提益。",
        "from": "T47n1973_009:0342c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八諸天人等同集一會益。",
        "from": "T47n1973_009:0342c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九無退轉益。",
        "from": "T47n1973_009:0342c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十無量行願增進益。",
        "from": "T47n1973_009:0342c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一鸚鵡舍利宣揚法音益。",
        "from": "T47n1973_009:0342c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二風樹樂響益。",
        "from": "T47n1973_009:0342c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三摩尼水漩演苦空益。",
        "from": "T47n1973_009:0342c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四諸樂奏妙音益。",
        "from": "T47n1973_009:0342c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五四十八願益。",
        "from": "T47n1973_009:0342c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六真金色身益。",
        "from": "T47n1973_009:0342c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七形無醜陋益。",
        "from": "T47n1973_009:0342c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八具足六通益。",
        "from": "T47n1973_009:0342c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九常住定聚益。",
        "from": "T47n1973_009:0342c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十無諸不善益。",
        "from": "T47n1973_009:0342c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十一壽命長遠益。",
        "from": "T47n1973_009:0342c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十二衣食自然益。",
        "from": "T47n1973_009:0342c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十三唯受眾樂益。",
        "from": "T47n1973_009:0342c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十四三十二相益。",
        "from": "T47n1973_009:0342c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十五實無女人益。",
        "from": "T47n1973_009:0342c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十六無有小乘益。",
        "from": "T47n1973_009:0342c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十七離於八難益。",
        "from": "T47n1973_009:0342c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八得三法忍益。",
        "from": "T47n1973_009:0342c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十九身常有光益。",
        "from": "T47n1973_009:0342c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十得那羅延身力益。",
        "from": "T47n1973_009:0342c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂處處菩提道明明功德林。",
        "from": "T47n1973_009:0342c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土成佛",
        "from": "T47n1973_009:0342c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛定後菩薩因圓。",
        "from": "T47n1973_009:0343a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫道中如來果滿。",
        "from": "T47n1973_009:0343a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具四無量心得四無礙辯。",
        "from": "T47n1973_009:0343a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八種法不共二乘。",
        "from": "T47n1973_009:0343a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十力現前說法無畏。",
        "from": "T47n1973_009:0343a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵沙或盡萬行功成。",
        "from": "T47n1973_009:0343a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十號俱彰三身圓顯。",
        "from": "T47n1973_009:0343a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具九十七種大人相。",
        "from": "T47n1973_009:0343a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放八萬四千大光明。",
        "from": "T47n1973_009:0343a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲智俱融福慧雙足。",
        "from": "T47n1973_009:0343a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現居十重報土能垂萬類化身。",
        "from": "T47n1973_009:0343a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布大慈雲雨大法雨。",
        "from": "T47n1973_009:0343a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滂流法界潤澤群生。",
        "from": "T47n1973_009:0343a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸悟本心同成正覺○選佛若無如是眼。",
        "from": "T47n1973_009:0343a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗風那得到如今。",
        "from": "T47n1973_009:0343a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廬山蓮宗寶鑑念佛正報卷第九(終)",
        "from": "T47n1973_009:0343a09_0",
        "context_with_next_sentence": false
    }
]