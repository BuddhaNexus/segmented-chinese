[
    {
        "source_sentence": "普賢菩薩發願文",
        "from": "X55n0914_001:0689c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台　智者大師　撰",
        "from": "X55n0914_001:0689c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首十方三世一切諸佛。",
        "from": "X55n0914_001:0689c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願當證知某甲。",
        "from": "X55n0914_001:0689c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛所有一切波羅蜜行。",
        "from": "X55n0914_001:0689c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今然當如彼修學。",
        "from": "X55n0914_001:0689c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛如來慈悲哀念。",
        "from": "X55n0914_001:0689c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我願於菩提心得大固力。",
        "from": "X55n0914_001:0689c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於不可思議諸佛法中得深信力。",
        "from": "X55n0914_001:0689c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於多聞中得不忘力。",
        "from": "X55n0914_001:0689c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於往來生死中得無疲倦力。",
        "from": "X55n0914_001:0689c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生中得堅大悲力。",
        "from": "X55n0914_001:0689c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於布施中得堅捨力。",
        "from": "X55n0914_001:0689c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於持戒中得不壞力。",
        "from": "X55n0914_001:0689c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於忍辱中得堅受力。",
        "from": "X55n0914_001:0689c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔不能壞得智慧力。",
        "from": "X55n0914_001:0689c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於深法中得信樂力。",
        "from": "X55n0914_001:0689c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者。",
        "from": "X55n0914_001:0689c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我於一切生處。",
        "from": "X55n0914_001:0689c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法中。",
        "from": "X55n0914_001:0689c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得供養十方一切諸佛。",
        "from": "X55n0914_001:0689c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0689c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者。",
        "from": "X55n0914_001:0689c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我受持如來甚深法海。",
        "from": "X55n0914_001:0689c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即自明解不由佗悟。",
        "from": "X55n0914_001:0689c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0689c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者。",
        "from": "X55n0914_001:0689c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛坐道場處。",
        "from": "X55n0914_001:0689c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我於中作攝法上首。",
        "from": "X55n0914_001:0689c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請轉法輪度脫眾生。",
        "from": "X55n0914_001:0689c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0689c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者。",
        "from": "X55n0914_001:0689c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我修行一切諸菩薩無邊廣大願。",
        "from": "X55n0914_001:0689c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0689c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者。",
        "from": "X55n0914_001:0689c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我教化一切眾生。",
        "from": "X55n0914_001:0689c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卵生．胎生．濕生．化生。",
        "from": "X55n0914_001:0689c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆令入無餘涅槃。",
        "from": "X55n0914_001:0689c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0689c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者。",
        "from": "X55n0914_001:0689c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我生諸佛剎如對目前。",
        "from": "X55n0914_001:0689c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0689c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者。",
        "from": "X55n0914_001:0689c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我嚴淨諸佛如來甚深剎海。",
        "from": "X55n0914_001:0689c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0690a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者。",
        "from": "X55n0914_001:0690a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我與一切諸菩薩同行。",
        "from": "X55n0914_001:0690a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集諸善根。",
        "from": "X55n0914_001:0690a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0690a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者。",
        "from": "X55n0914_001:0690a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我所有身口意業。",
        "from": "X55n0914_001:0690a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生見聞皆獲利益。",
        "from": "X55n0914_001:0690a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如藥樹王無空過者。",
        "from": "X55n0914_001:0690a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0690a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者。",
        "from": "X55n0914_001:0690a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我於一切微塵道中成等正覺。",
        "from": "X55n0914_001:0690a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉大法輪。",
        "from": "X55n0914_001:0690a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度脫眾生。",
        "from": "X55n0914_001:0690a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際無有休息。",
        "from": "X55n0914_001:0690a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子若能發此十大願者。",
        "from": "X55n0914_001:0690a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百萬阿僧祗願門皆悉見發。",
        "from": "X55n0914_001:0690a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願以此廣大誓願。",
        "from": "X55n0914_001:0690a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種善根。",
        "from": "X55n0914_001:0690a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向一切眾生。",
        "from": "X55n0914_001:0690a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願皆永離三惡道苦。",
        "from": "X55n0914_001:0690a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足普賢菩薩行願。",
        "from": "X55n0914_001:0690a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我又以此善根迴向無上菩提。",
        "from": "X55n0914_001:0690a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求世間二乘果報。",
        "from": "X55n0914_001:0690a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我又以此善根迴向真如法界海。",
        "from": "X55n0914_001:0690a09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如無滅。",
        "from": "X55n0914_001:0690a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏無為。",
        "from": "X55n0914_001:0690a10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可破壞。",
        "from": "X55n0914_001:0690a10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我善根亦復如是。",
        "from": "X55n0914_001:0690a10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如三世諸佛迴向。",
        "from": "X55n0914_001:0690a11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦如是迴向。",
        "from": "X55n0914_001:0690a11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向已歸命禮三寶。",
        "from": "X55n0914_001:0690a11_28",
        "context_with_next_sentence": false
    }
]