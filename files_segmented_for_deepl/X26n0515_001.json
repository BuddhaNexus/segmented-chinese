[
    {
        "source_sentence": " 仁王護國般若波羅蜜多經科疏(并敘)聞夫。",
        "from": "X26n0515_001:0190a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真際寂寥。",
        "from": "X26n0515_001:0190a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕染淨於色心之域。",
        "from": "X26n0515_001:0190a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法性空廓。",
        "from": "X26n0515_001:0190a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超修證於理智之階。",
        "from": "X26n0515_001:0190a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冲虗靈鑑。",
        "from": "X26n0515_001:0190a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙粹凝常。",
        "from": "X26n0515_001:0190a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨露萬象而非多。",
        "from": "X26n0515_001:0190a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓立十方而匪異。",
        "from": "X26n0515_001:0190a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良繇非一多之緣起。",
        "from": "X26n0515_001:0190a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染淨齊峙以融通。",
        "from": "X26n0515_001:0190a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟修證之體空。",
        "from": "X26n0515_001:0190a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果兩忘而交徹。",
        "from": "X26n0515_001:0190a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以空有空。",
        "from": "X26n0515_001:0190a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空不空。",
        "from": "X26n0515_001:0190a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有空有。",
        "from": "X26n0515_001:0190a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有不有。",
        "from": "X26n0515_001:0190a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不有有。",
        "from": "X26n0515_001:0190a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有非常。",
        "from": "X26n0515_001:0190a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空空。",
        "from": "X26n0515_001:0190a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空非斷。",
        "from": "X26n0515_001:0190a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非斷故乃真空。",
        "from": "X26n0515_001:0190a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非當故即妙有。",
        "from": "X26n0515_001:0190a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則妙有真空之道。",
        "from": "X26n0515_001:0190a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同時相容而互即。",
        "from": "X26n0515_001:0190a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念交攝以相含。",
        "from": "X26n0515_001:0190a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於含攝雙忘。",
        "from": "X26n0515_001:0190a12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "容即兩立。",
        "from": "X26n0515_001:0190a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄同真際。",
        "from": "X26n0515_001:0190a13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙等法性。",
        "from": "X26n0515_001:0190a13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠勝義諦中。",
        "from": "X26n0515_001:0190a13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真勝義性。",
        "from": "X26n0515_001:0190a13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逈出三乘。",
        "from": "X26n0515_001:0190a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高超八部。",
        "from": "X26n0515_001:0190a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃此經窮微盡化之極譚。",
        "from": "X26n0515_001:0190a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙絕言思之玄唱也。",
        "from": "X26n0515_001:0190a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故我世尊。",
        "from": "X26n0515_001:0190a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象駕俄臨鷲嶺。",
        "from": "X26n0515_001:0190a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍天列侍獅床。",
        "from": "X26n0515_001:0190a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾雲擁道場。",
        "from": "X26n0515_001:0190a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王臣風趨理窟。",
        "from": "X26n0515_001:0190a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入定湛智海澄波。",
        "from": "X26n0515_001:0190a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放光皎性天慧日。",
        "from": "X26n0515_001:0190a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他方大士。",
        "from": "X26n0515_001:0190a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙花香燈作供。",
        "from": "X26n0515_001:0190a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此土世主。",
        "from": "X26n0515_001:0190a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶幢幡葢投誠。",
        "from": "X26n0515_001:0190a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變淨土於塵沙。",
        "from": "X26n0515_001:0190a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現寶臺於百億。",
        "from": "X26n0515_001:0190a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛踞金蓮。",
        "from": "X26n0515_001:0190a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流徧恒沙國土。",
        "from": "X26n0515_001:0190a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共譚般若。",
        "from": "X26n0515_001:0190a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝歸一派靈源。",
        "from": "X26n0515_001:0190a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯王念請護國。",
        "from": "X26n0515_001:0190a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾佛言答護心。",
        "from": "X26n0515_001:0190a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示離相以明真。",
        "from": "X26n0515_001:0190a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀體空而行化。",
        "from": "X26n0515_001:0190a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達身佛同一實相。",
        "from": "X26n0515_001:0190a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標理事總一靈玄。",
        "from": "X26n0515_001:0190a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃護國之樞機。",
        "from": "X26n0515_001:0190a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安邦之要徑也。",
        "from": "X26n0515_001:0190a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既悟護果觀空。",
        "from": "X26n0515_001:0190a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須達修因行化。",
        "from": "X26n0515_001:0190a24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故明性與無性。",
        "from": "X26n0515_001:0190a24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本一靈知。",
        "from": "X26n0515_001:0190a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十二位真修。",
        "from": "X26n0515_001:0190a24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一十四門玄趣。",
        "from": "X26n0515_001:0190b01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄位權化。",
        "from": "X26n0515_001:0190b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏斷證修。",
        "from": "X26n0515_001:0190b01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於三假俱空。",
        "from": "X26n0515_001:0190b02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一相無實。",
        "from": "X26n0515_001:0190b02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭頭聳般若妙光。",
        "from": "X26n0515_001:0190b02_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步步踏實相理地。",
        "from": "X26n0515_001:0190b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二護既明。",
        "from": "X26n0515_001:0190b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一真當顯。",
        "from": "X26n0515_001:0190b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故諮二諦有無。",
        "from": "X26n0515_001:0190b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意明本非一二。",
        "from": "X26n0515_001:0190b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯王偈讚。",
        "from": "X26n0515_001:0190b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來述成。",
        "from": "X26n0515_001:0190b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為行法所依理體。",
        "from": "X26n0515_001:0190b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果德能照智用耳。",
        "from": "X26n0515_001:0190b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二護理事抗行。",
        "from": "X26n0515_001:0190b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若體用無二。",
        "from": "X26n0515_001:0190b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以斯王重諮護國。",
        "from": "X26n0515_001:0190b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來復示真慈。",
        "from": "X26n0515_001:0190b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云國土。",
        "from": "X26n0515_001:0190b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生共業招感。",
        "from": "X26n0515_001:0190b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禍福。",
        "from": "X26n0515_001:0190b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人心別業變現。",
        "from": "X26n0515_001:0190b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心正則天清地寧。",
        "from": "X26n0515_001:0190b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心邪則災殃禍祟。",
        "from": "X26n0515_001:0190b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲使千災頓息。",
        "from": "X26n0515_001:0190b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬禍潛消。",
        "from": "X26n0515_001:0190b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須百法師。",
        "from": "X26n0515_001:0190b09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以持般若。",
        "from": "X26n0515_001:0190b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴一道場。",
        "from": "X26n0515_001:0190b09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供諸聖容。",
        "from": "X26n0515_001:0190b10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故帝釋修持頂生即退。",
        "from": "X26n0515_001:0190b10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普明講演班足棄榮者。",
        "from": "X26n0515_001:0190b10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良有以也。",
        "from": "X26n0515_001:0190b11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然諸王領解。",
        "from": "X26n0515_001:0190b11_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各依真獻華。",
        "from": "X26n0515_001:0190b11_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華變珍臺。",
        "from": "X26n0515_001:0190b12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛佛共譚般若。",
        "from": "X26n0515_001:0190b12_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現一華多土。",
        "from": "X26n0515_001:0190b12_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多土一華。",
        "from": "X26n0515_001:0190b13_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大小染淨。",
        "from": "X26n0515_001:0190b13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相攝入。",
        "from": "X26n0515_001:0190b13_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠謂罄宏廓之幽宗。",
        "from": "X26n0515_001:0190b13_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡難思之海會。",
        "from": "X26n0515_001:0190b14_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知一念淨信之福。",
        "from": "X26n0515_001:0190b14_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝化證恒沙小乘。",
        "from": "X26n0515_001:0190b14_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉心受持之功。",
        "from": "X26n0515_001:0190b15_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超施七寶大德者。",
        "from": "X26n0515_001:0190b15_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信不誣矣。",
        "from": "X26n0515_001:0190b16_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向譚護果。",
        "from": "X26n0515_001:0190b16_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未盡行因。",
        "from": "X26n0515_001:0190b16_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於五忍十地。",
        "from": "X26n0515_001:0190b16_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詳示伏斷證修。",
        "from": "X26n0515_001:0190b17_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度生數量。",
        "from": "X26n0515_001:0190b17_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時劫短長。",
        "from": "X26n0515_001:0190b17_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至令五方金剛。",
        "from": "X26n0515_001:0190b17_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說呪往衛。",
        "from": "X26n0515_001:0190b18_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意令因行大成。",
        "from": "X26n0515_001:0190b18_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護國誠念究竟。",
        "from": "X26n0515_001:0190b18_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以依之護國。",
        "from": "X26n0515_001:0190b19_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當念世道康和。",
        "from": "X26n0515_001:0190b19_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仗之護果。",
        "from": "X26n0515_001:0190b19_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃刻菩提妙證。",
        "from": "X26n0515_001:0190b19_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夫祈皇圖而永固。",
        "from": "X26n0515_001:0190b20_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祝聖壽以無彊。",
        "from": "X26n0515_001:0190b21_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍此般若。",
        "from": "X26n0515_001:0190b22_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其孰與焉。",
        "from": "X26n0515_001:0190b22_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然念請護國。",
        "from": "X26n0515_001:0190b22_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先說護果者。",
        "from": "X26n0515_001:0190b22_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢以護果正念。",
        "from": "X26n0515_001:0190b23_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為護國金湯。",
        "from": "X26n0515_001:0190b23_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令國中七難潛消。",
        "from": "X26n0515_001:0190b23_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五常彌布。",
        "from": "X26n0515_001:0190b24_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此護國深心。",
        "from": "X26n0515_001:0190b24_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作轉凡妙藥。",
        "from": "X26n0515_001:0190b24_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾果上四智圓明。",
        "from": "X26n0515_001:0190c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三身頓證。",
        "from": "X26n0515_001:0190c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則護國護果。",
        "from": "X26n0515_001:0190c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無出乎忍地證修。",
        "from": "X26n0515_001:0190c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相為用矣。",
        "from": "X26n0515_001:0190c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至玄微既闡當時。",
        "from": "X26n0515_001:0190c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝益應霑末世。",
        "from": "X26n0515_001:0190c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來預憂法滅王臣力能護持。",
        "from": "X26n0515_001:0190c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諄諄示誡。",
        "from": "X26n0515_001:0190c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切切叮嚀。",
        "from": "X26n0515_001:0190c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王領誨。",
        "from": "X26n0515_001:0190c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泣撼三千。",
        "from": "X26n0515_001:0190c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誓行道。",
        "from": "X26n0515_001:0190c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不制四眾。",
        "from": "X26n0515_001:0190c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經名甘露法藥。",
        "from": "X26n0515_001:0190c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信服却病延年。",
        "from": "X26n0515_001:0190c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持功德。",
        "from": "X26n0515_001:0190c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福等虗空。",
        "from": "X26n0515_001:0190c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能護國王。",
        "from": "X26n0515_001:0190c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功高城壍。",
        "from": "X26n0515_001:0190c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂一極悲心。",
        "from": "X26n0515_001:0190c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大哀曠濟者也。",
        "from": "X26n0515_001:0190c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大哉此經。",
        "from": "X26n0515_001:0190c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三根普攝。",
        "from": "X26n0515_001:0190c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五味俱含。",
        "from": "X26n0515_001:0190c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰夫秦譯幽秘。",
        "from": "X26n0515_001:0190c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台疏闡玄微。",
        "from": "X26n0515_001:0190c08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊惟唐翻靈篇。",
        "from": "X26n0515_001:0190c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後哲未窺其奧。",
        "from": "X26n0515_001:0190c09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加以言空言有而義圓。",
        "from": "X26n0515_001:0190c09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名同有空而體異。",
        "from": "X26n0515_001:0190c10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後昆有所未達。",
        "from": "X26n0515_001:0190c10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故貴從之為解。",
        "from": "X26n0515_001:0190c11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自神祖戊午夏。",
        "from": "X26n0515_001:0190c11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因禮清涼山回。",
        "from": "X26n0515_001:0190c12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驚聞奴賊跳梁。",
        "from": "X26n0515_001:0190c12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失陷撫順。",
        "from": "X26n0515_001:0190c12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒿目之憂。",
        "from": "X26n0515_001:0190c13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流注寤寐。",
        "from": "X26n0515_001:0190c13_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓弘此典。",
        "from": "X26n0515_001:0190c13_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上報國恩。",
        "from": "X26n0515_001:0190c13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不揆膚受。",
        "from": "X26n0515_001:0190c14_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "筆錄成篇。",
        "from": "X26n0515_001:0190c14_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時門人敬賢忠公。",
        "from": "X26n0515_001:0190c14_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "關中人。",
        "from": "X26n0515_001:0190c14_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留心較梓。",
        "from": "X26n0515_001:0190c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其志未滿。",
        "from": "X26n0515_001:0190c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "早作古人。",
        "from": "X26n0515_001:0190c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去年己巳。",
        "from": "X26n0515_001:0190c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虜薄都城。",
        "from": "X26n0515_001:0190c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貴潛質山巖。",
        "from": "X26n0515_001:0190c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦被圍困。",
        "from": "X26n0515_001:0190c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重整先心。",
        "from": "X26n0515_001:0190c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希殄災厄。",
        "from": "X26n0515_001:0190c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰蒙",
        "from": "X26n0515_001:0190c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛庇。",
        "from": "X26n0515_001:0190c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法孫海濶。",
        "from": "X26n0515_001:0190c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率徒寂妙等。",
        "from": "X26n0515_001:0190c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨命忘軀。",
        "from": "X26n0515_001:0190c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜扶老體。",
        "from": "X26n0515_001:0190c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同戒密觀。",
        "from": "X26n0515_001:0190c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還居本寺。",
        "from": "X26n0515_001:0190c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後有門人湛一肫公。",
        "from": "X26n0515_001:0190c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "營山人。",
        "from": "X26n0515_001:0190c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精嚴教理。",
        "from": "X26n0515_001:0190c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見圍厄已解。",
        "from": "X26n0515_001:0190c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶弘經念深。",
        "from": "X26n0515_001:0190c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再四迫余。",
        "from": "X26n0515_001:0190c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災木償願。",
        "from": "X26n0515_001:0190c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂再參詳。",
        "from": "X26n0515_001:0190c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲辭達義通僭名科疏。",
        "from": "X26n0515_001:0190c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶覧者有秉燭之觀。",
        "from": "X26n0515_001:0190c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無尋枝之厭。",
        "from": "X26n0515_001:0190c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藉此以通經。",
        "from": "X26n0515_001:0190c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經通而意得。",
        "from": "X26n0515_001:0190c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意既得矣。",
        "from": "X26n0515_001:0190c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則般若智體。",
        "from": "X26n0515_001:0190c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昭昭然於心目之間。",
        "from": "X26n0515_001:0190c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晃晃乎於色塵之內。",
        "from": "X26n0515_001:0190c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是則靈山不離當處。",
        "from": "X26n0515_001:0190c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王即我聖皇。",
        "from": "X26n0515_001:0191a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五忍　朝中玉柱擎　天。",
        "from": "X26n0515_001:0191a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地塞外金梁架海。",
        "from": "X26n0515_001:0191a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四夷消氛於無何有鄉。",
        "from": "X26n0515_001:0191a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八表歸心於大明上國。",
        "from": "X26n0515_001:0191a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊盡報國福民之葵誠。",
        "from": "X26n0515_001:0191a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴聖教之丹悃也。",
        "from": "X26n0515_001:0191a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疏成。",
        "from": "X26n0515_001:0191a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非敢布諸講肆。",
        "from": "X26n0515_001:0191a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取哂高明。",
        "from": "X26n0515_001:0191a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯便八十老人。",
        "from": "X26n0515_001:0191a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自備遺忘耳。",
        "from": "X26n0515_001:0191a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時明崇禎三年。",
        "from": "X26n0515_001:0191a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲次庚午。",
        "from": "X26n0515_001:0191a07_10",
        "context_with_next_sentence": true
