[
    {
        "source_sentence": "首楞嚴經勢至圓通章解",
        "from": "X16n0312_001:0392c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清　行策撰",
        "from": "X16n0312_001:0392c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首楞嚴一經。",
        "from": "X16n0312_001:0392c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說在法華之後。",
        "from": "X16n0312_001:0392c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實為佛法堂奧。",
        "from": "X16n0312_001:0392c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔智者判教時。",
        "from": "X16n0312_001:0392c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經未來支那。",
        "from": "X16n0312_001:0392c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故唯以法華涅槃為後味。",
        "from": "X16n0312_001:0392c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若令一見。",
        "from": "X16n0312_001:0392c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必廣有疏釋。",
        "from": "X16n0312_001:0392c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且判屬醍醐無疑矣。",
        "from": "X16n0312_001:0392c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈四依大士已滅。",
        "from": "X16n0312_001:0392c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古今疏主各興異見。",
        "from": "X16n0312_001:0392c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久如聚訟。",
        "from": "X16n0312_001:0392c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後學不具擇法眼。",
        "from": "X16n0312_001:0392c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靡所適從。",
        "from": "X16n0312_001:0392c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至欲盡廢疏解唯看經文。",
        "from": "X16n0312_001:0392c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦過激之論也。",
        "from": "X16n0312_001:0392c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及乎以己智尋經。",
        "from": "X16n0312_001:0392c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又多不能達其旨趣。",
        "from": "X16n0312_001:0392c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則終於昧昧而已。",
        "from": "X16n0312_001:0392c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試平心論之。",
        "from": "X16n0312_001:0392c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾解豈無長處。",
        "from": "X16n0312_001:0392c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然不失之乖謬。",
        "from": "X16n0312_001:0392c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即失之粗略。",
        "from": "X16n0312_001:0392c13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閒有智識高超出乎其類者。",
        "from": "X16n0312_001:0392c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則又借此經。",
        "from": "X16n0312_001:0392c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發揮匈中。",
        "from": "X16n0312_001:0392c14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刱論有真。",
        "from": "X16n0312_001:0392c14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能舍己從經。",
        "from": "X16n0312_001:0392c14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曲順佛意。",
        "from": "X16n0312_001:0392c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則西湖鑑一疏之外。",
        "from": "X16n0312_001:0392c14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾未見其能竝美者。",
        "from": "X16n0312_001:0392c15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰謂今人必不能邁古耶。",
        "from": "X16n0312_001:0392c15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或病其主張太過。",
        "from": "X16n0312_001:0392c16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譏其杜撰不無。",
        "from": "X16n0312_001:0392c16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱未能無遺憾。",
        "from": "X16n0312_001:0392c16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要亦大有功於此經者矣。",
        "from": "X16n0312_001:0392c17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於舍識用根歸重圓通之說。",
        "from": "X16n0312_001:0392c17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則諸佛誠言誰敢不信。",
        "from": "X16n0312_001:0392c18_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方教體誰敢不遵從。",
        "from": "X16n0312_001:0392c18_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而議之者。",
        "from": "X16n0312_001:0392c19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆違經抗佛者也。",
        "from": "X16n0312_001:0392c19_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現前諸善友既已標心淨土。",
        "from": "X16n0312_001:0392c19_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復欲研究此經。",
        "from": "X16n0312_001:0392c20_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚不易得。",
        "from": "X16n0312_001:0392c20_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然始末無論。",
        "from": "X16n0312_001:0392c20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只此圓通文中大有淆譌處。",
        "from": "X16n0312_001:0392c21_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若非善讀善會者。",
        "from": "X16n0312_001:0392c21_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則所謂醍醐毒藥亦不甚遠。",
        "from": "X16n0312_001:0392c21_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不聞楞嚴會上選佛場開。",
        "from": "X16n0312_001:0392c22_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀音登科。",
        "from": "X16n0312_001:0392c23_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢至下第。",
        "from": "X16n0312_001:0392c23_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修淨土人於此若不揀辨。",
        "from": "X16n0312_001:0392c23_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以發此經之密意。",
        "from": "X16n0312_001:0392c23_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而堅後學之行願耶。",
        "from": "X16n0312_001:0392c24_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但勢至法門非此經要義。",
        "from": "X16n0312_001:0392c24_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故鑑師疏中亦引而不發。",
        "from": "X16n0312_001:0393a01_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則先辨法門。",
        "from": "X16n0312_001:0393a01_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次彰密意。",
        "from": "X16n0312_001:0393a02_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨法門者。",
        "from": "X16n0312_001:0393a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此聖圓通屬七大中根大。",
        "from": "X16n0312_001:0393a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以都攝六根故。",
        "from": "X16n0312_001:0393a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依此六根而修念佛三昧。",
        "from": "X16n0312_001:0393a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三種不同。",
        "from": "X16n0312_001:0393a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者念自佛。",
        "from": "X16n0312_001:0393a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者念他佛。",
        "from": "X16n0312_001:0393a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者念自他佛。",
        "from": "X16n0312_001:0393a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若念自佛。",
        "from": "X16n0312_001:0393a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則與諸聖圓通。",
        "from": "X16n0312_001:0393a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是同以根性為所念法門。",
        "from": "X16n0312_001:0393a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以旋湛為能念方便。",
        "from": "X16n0312_001:0393a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如央崛經云。",
        "from": "X16n0312_001:0393a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂彼眼根於諸如來常具足無減修。",
        "from": "X16n0312_001:0393a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明見。",
        "from": "X16n0312_001:0393a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至彼意根於諸如來常具足無減修。",
        "from": "X16n0312_001:0393a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明知等。",
        "from": "X16n0312_001:0393a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如此經十方諸佛同告阿難。",
        "from": "X16n0312_001:0393a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令汝速證安樂解脫寂靜妙常。",
        "from": "X16n0312_001:0393a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯汝六根更非他物。",
        "from": "X16n0312_001:0393a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如祖師云。",
        "from": "X16n0312_001:0393a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在胎名身。",
        "from": "X16n0312_001:0393a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處世為人。",
        "from": "X16n0312_001:0393a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在眼曰見。",
        "from": "X16n0312_001:0393a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在耳曰聞。",
        "from": "X16n0312_001:0393a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在鼻辨香。",
        "from": "X16n0312_001:0393a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在口談論。",
        "from": "X16n0312_001:0393a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在手執捉。",
        "from": "X16n0312_001:0393a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在足運奔。",
        "from": "X16n0312_001:0393a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識者知是佛性。",
        "from": "X16n0312_001:0393a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不識喚作精魂。",
        "from": "X16n0312_001:0393a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從上諸祖如斯指示甚多。",
        "from": "X16n0312_001:0393a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此念自佛三昧具攝一切教義。",
        "from": "X16n0312_001:0393a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切禪宗直指法門。",
        "from": "X16n0312_001:0393a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罄無不盡也。",
        "from": "X16n0312_001:0393a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若念他佛。",
        "from": "X16n0312_001:0393a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則與諸聖圓通有異。",
        "from": "X16n0312_001:0393a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以六根為能念。",
        "from": "X16n0312_001:0393a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以果佛為所念。",
        "from": "X16n0312_001:0393a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身雖復一體。",
        "from": "X16n0312_001:0393a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無二種莊嚴。",
        "from": "X16n0312_001:0393a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛福智圓滿成兩足尊。",
        "from": "X16n0312_001:0393a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念彼果德。",
        "from": "X16n0312_001:0393a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生疲厭。",
        "from": "X16n0312_001:0393a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼常瞻佛相。",
        "from": "X16n0312_001:0393a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳常聞佛教。",
        "from": "X16n0312_001:0393a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻常觸佛香。",
        "from": "X16n0312_001:0393a18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌常稱佛號。",
        "from": "X16n0312_001:0393a18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身常禮佛像。",
        "from": "X16n0312_001:0393a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意常緣佛法。",
        "from": "X16n0312_001:0393a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根所注無非佛境。",
        "from": "X16n0312_001:0393a19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是相繼無閒無雜。",
        "from": "X16n0312_001:0393a19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此念他佛三昧。",
        "from": "X16n0312_001:0393a20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具攝一切彌陀藥師彌勒上生等經。",
        "from": "X16n0312_001:0393a20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及蓮社一切業行事想法門。",
        "from": "X16n0312_001:0393a21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罄無不盡也。",
        "from": "X16n0312_001:0393a21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若念自他佛。",
        "from": "X16n0312_001:0393a21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則與諸聖圓通。",
        "from": "X16n0312_001:0393a22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同而復異。",
        "from": "X16n0312_001:0393a22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須開圓頓解。",
        "from": "X16n0312_001:0393a22_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知生佛一如心土不二。",
        "from": "X16n0312_001:0393a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "託彼依正顯我心性。",
        "from": "X16n0312_001:0393a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既不迷性外。",
        "from": "X16n0312_001:0393a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛亦不執。",
        "from": "X16n0312_001:0393a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼土非心。",
        "from": "X16n0312_001:0393a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則開圓解處與諸聖同。",
        "from": "X16n0312_001:0393a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "託他境處與諸聖異。",
        "from": "X16n0312_001:0393b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六觀經所謂勝異方便。",
        "from": "X16n0312_001:0393b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今文謂不假方便自得心開。",
        "from": "X16n0312_001:0393b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此方便最勝極異故。",
        "from": "X16n0312_001:0393b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不更假餘方便也。",
        "from": "X16n0312_001:0393b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祗就圓頓教中三種念佛三昧。",
        "from": "X16n0312_001:0393b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對四種淨土。",
        "from": "X16n0312_001:0393b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略辨攝生大用。",
        "from": "X16n0312_001:0393b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟念自佛者。",
        "from": "X16n0312_001:0393b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝歸實報寂光二種淨土。",
        "from": "X16n0312_001:0393b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然但能豎入不能橫超。",
        "from": "X16n0312_001:0393b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又但被利根不能普攝。",
        "from": "X16n0312_001:0393b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又則諸聖所同不顯此門獨異。",
        "from": "X16n0312_001:0393b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似非勢至攝歸本旨。",
        "from": "X16n0312_001:0393b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今謂正攝念他佛及念自他佛二種行人。",
        "from": "X16n0312_001:0393b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸于同居淨土。",
        "from": "X16n0312_001:0393b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼復橫超方便實報寂光。",
        "from": "X16n0312_001:0393b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故文中深明感應道交之益也。",
        "from": "X16n0312_001:0393b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次顯經密意者。",
        "from": "X16n0312_001:0393b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "選擇圓通法門。",
        "from": "X16n0312_001:0393b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如國家用兵選將相似。",
        "from": "X16n0312_001:0393b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或推作先鋒。",
        "from": "X16n0312_001:0393b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或壓令殿後。",
        "from": "X16n0312_001:0393b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殿後者為正選。",
        "from": "X16n0312_001:0393b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘則各隨常隊而已。",
        "from": "X16n0312_001:0393b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其推與壓要非無故而然。",
        "from": "X16n0312_001:0393b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祗如十八界中。",
        "from": "X16n0312_001:0393b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必先根次塵後識。",
        "from": "X16n0312_001:0393b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此常例也。",
        "from": "X16n0312_001:0393b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以六塵居先而根次之。",
        "from": "X16n0312_001:0393b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六塵中必先色次聲。",
        "from": "X16n0312_001:0393b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以及香味觸法。",
        "from": "X16n0312_001:0393b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以聲最居先而色次之。",
        "from": "X16n0312_001:0393b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於六根中僅列其五。",
        "from": "X16n0312_001:0393b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抽出耳根置于二十四門之後。",
        "from": "X16n0312_001:0393b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢以此方真教體清淨在音聞。",
        "from": "X16n0312_001:0393b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以音塵開先。",
        "from": "X16n0312_001:0393b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞根殿後。",
        "from": "X16n0312_001:0393b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而獨詳明之也。",
        "from": "X16n0312_001:0393b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不顯言其故。",
        "from": "X16n0312_001:0393b17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人已覺之。",
        "from": "X16n0312_001:0393b18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既歸重耳門。",
        "from": "X16n0312_001:0393b18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一經要旨排列圓通法應如是。",
        "from": "X16n0312_001:0393b18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然念佛法門亦逗此方機宜。",
        "from": "X16n0312_001:0393b19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末世眾生須依念佛得度。",
        "from": "X16n0312_001:0393b19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃此經方令一門深入直了自性。",
        "from": "X16n0312_001:0393b20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復雙選二門。",
        "from": "X16n0312_001:0393b20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則昧本經旨趣。",
        "from": "X16n0312_001:0393b21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若令念佛法門直爾混依常隊。",
        "from": "X16n0312_001:0393b21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又失他經廣讚之意。",
        "from": "X16n0312_001:0393b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今巧示推壓。",
        "from": "X16n0312_001:0393b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如軍中密令未許泄漏。",
        "from": "X16n0312_001:0393b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢前於十八界中。",
        "from": "X16n0312_001:0393b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明抽耳根為重將矣。",
        "from": "X16n0312_001:0393b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今乃於七大中。",
        "from": "X16n0312_001:0393b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暗壓根大為重將。",
        "from": "X16n0312_001:0393b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此根大正屬念佛法門。",
        "from": "X16n0312_001:0393b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既不違他經廣讚之宗。",
        "from": "X16n0312_001:0393c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍不乖此經用根之義。",
        "from": "X16n0312_001:0393c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂至巧亦至密矣。",
        "from": "X16n0312_001:0393c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫七大次第。",
        "from": "X16n0312_001:0393c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰地水火風空見識。",
        "from": "X16n0312_001:0393c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見即是根本。",
        "from": "X16n0312_001:0393c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應根先識後。",
        "from": "X16n0312_001:0393c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今移識居第六。",
        "from": "X16n0312_001:0393c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以根大殿後。",
        "from": "X16n0312_001:0393c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如十八界中之耳門也。",
        "from": "X16n0312_001:0393c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於前五大中。",
        "from": "X16n0312_001:0393c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推火大作先鋒。",
        "from": "X16n0312_001:0393c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以地水風空次之。",
        "from": "X16n0312_001:0393c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此有兩意。",
        "from": "X16n0312_001:0393c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為當機墮婬起教故。",
        "from": "X16n0312_001:0393c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以多婬召火。",
        "from": "X16n0312_001:0393c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "警多聞人先除欲漏也。",
        "from": "X16n0312_001:0393c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故文云。",
        "from": "X16n0312_001:0393c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說多婬人成猛火聚。",
        "from": "X16n0312_001:0393c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至化多婬心成智慧火。",
        "from": "X16n0312_001:0393c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛呼我名為火頭。",
        "from": "X16n0312_001:0393c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以火光三昧力故成阿羅漢。",
        "from": "X16n0312_001:0393c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願為力士。",
        "from": "X16n0312_001:0393c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親伏魔怨等。",
        "from": "X16n0312_001:0393c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明以警之也。",
        "from": "X16n0312_001:0393c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切經律中。",
        "from": "X16n0312_001:0393c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以不殺為首戒。",
        "from": "X16n0312_001:0393c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經則以不婬為第一決定明誨。",
        "from": "X16n0312_001:0393c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三緣中。",
        "from": "X16n0312_001:0393c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以欲貪先於殺盜。",
        "from": "X16n0312_001:0393c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "均此意耳。",
        "from": "X16n0312_001:0393c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二為末世對治重障。",
        "from": "X16n0312_001:0393c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以煩惱雖多惟婬欲為生死根本。",
        "from": "X16n0312_001:0393c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最能障往生法故。",
        "from": "X16n0312_001:0393c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令行人觀凡夫身內婬火。",
        "from": "X16n0312_001:0393c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如來藏性空真火循業發現。",
        "from": "X16n0312_001:0393c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深觀得悟成智慧光。",
        "from": "X16n0312_001:0393c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非唯不障往生。",
        "from": "X16n0312_001:0393c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且能將送行人託上上品。",
        "from": "X16n0312_001:0393c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以淨名讚婬怒癡。",
        "from": "X16n0312_001:0393c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其體即藏性而染淨。",
        "from": "X16n0312_001:0393c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功用在反掌間耳。",
        "from": "X16n0312_001:0393c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以火頭居先。",
        "from": "X16n0312_001:0393c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如十八界中之陳那也。",
        "from": "X16n0312_001:0393c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今請歷觀諸聖。",
        "from": "X16n0312_001:0393c17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除此二先鋒。",
        "from": "X16n0312_001:0393c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二重將外。",
        "from": "X16n0312_001:0393c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘皆一依常例。",
        "from": "X16n0312_001:0393c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第不紊可見。",
        "from": "X16n0312_001:0393c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十五聖起座之時。",
        "from": "X16n0312_001:0393c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大弟子結集之際。",
        "from": "X16n0312_001:0393c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一威一儀。",
        "from": "X16n0312_001:0393c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一起一止。",
        "from": "X16n0312_001:0393c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有深意。",
        "from": "X16n0312_001:0393c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉符教義。",
        "from": "X16n0312_001:0393c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以粗心遇之。",
        "from": "X16n0312_001:0393c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又安可得耶。",
        "from": "X16n0312_001:0393c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則觀音雖獨登科。",
        "from": "X16n0312_001:0393c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢至豈全下第。",
        "from": "X16n0312_001:0393c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但於觀音則明選。",
        "from": "X16n0312_001:0393c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於勢至則暗選耳。",
        "from": "X16n0312_001:0393c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以圓根別入故明選。",
        "from": "X16n0312_001:0393c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸相總攝故暗選。",
        "from": "X16n0312_001:0393c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方教體故明選。",
        "from": "X16n0312_001:0393c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此土有緣故暗選。",
        "from": "X16n0312_001:0393c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通益當機時會現未眾生故明選。",
        "from": "X16n0312_001:0393c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別益惡世法末時不見佛眾生故暗選。",
        "from": "X16n0312_001:0393c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎榜高顯處人所共知。",
        "from": "X16n0312_001:0394a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱衣暗點時人所不覺。",
        "from": "X16n0312_001:0394a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰大有淆譌。",
        "from": "X16n0312_001:0394a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須善讀善會也。",
        "from": "X16n0312_001:0394a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或曰既是密意。",
        "from": "X16n0312_001:0394a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何得泄漏。",
        "from": "X16n0312_001:0394a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰楞嚴選佛場中。",
        "from": "X16n0312_001:0394a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揭榜已二千餘年矣。",
        "from": "X16n0312_001:0394a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此時若不明破。",
        "from": "X16n0312_001:0394a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密將焉用。",
        "from": "X16n0312_001:0394a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或又曰。",
        "from": "X16n0312_001:0394a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠如子言則文殊說偈選擇時。",
        "from": "X16n0312_001:0394a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈亦不知密意。",
        "from": "X16n0312_001:0394a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不遵前例一概都揀耶。",
        "from": "X16n0312_001:0394a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X16n0312_001:0394a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸聖自陳各說第一。",
        "from": "X16n0312_001:0394a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故寄推壓巧示密機。",
        "from": "X16n0312_001:0394a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若承敕正選時。",
        "from": "X16n0312_001:0394a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一依前軌。",
        "from": "X16n0312_001:0394a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何得成密。",
        "from": "X16n0312_001:0394a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然但聲塵火大準歸常次。",
        "from": "X16n0312_001:0394a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此二門別意助顯。",
        "from": "X16n0312_001:0394a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非本所歸重。",
        "from": "X16n0312_001:0394a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不更推出。",
        "from": "X16n0312_001:0394a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於勢至法門。",
        "from": "X16n0312_001:0394a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍順長行。",
        "from": "X16n0312_001:0394a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置識大後。",
        "from": "X16n0312_001:0394a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為二十四門之殿。",
        "from": "X16n0312_001:0394a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未始不遵也。",
        "from": "X16n0312_001:0394a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且既令專選一門。",
        "from": "X16n0312_001:0394a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何得不揀勢至。",
        "from": "X16n0312_001:0394a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀其揀辭。",
        "from": "X16n0312_001:0394a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍與諸聖不同。",
        "from": "X16n0312_001:0394a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但曰因果今殊感云何獲圓通。",
        "from": "X16n0312_001:0394a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意謂彼雖都攝六根淨念相繼。",
        "from": "X16n0312_001:0394a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此相繼之念。",
        "from": "X16n0312_001:0394a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既屬行蘊遷流。",
        "from": "X16n0312_001:0394a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦生滅法。",
        "from": "X16n0312_001:0394a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此為因。",
        "from": "X16n0312_001:0394a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲往生見佛。",
        "from": "X16n0312_001:0394a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰曰不可。",
        "from": "X16n0312_001:0394a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲現證不生滅圓通。",
        "from": "X16n0312_001:0394a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則因果不符。",
        "from": "X16n0312_001:0394a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能克獲。",
        "from": "X16n0312_001:0394a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此揀現獲圓通為難。",
        "from": "X16n0312_001:0394a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非揀往生後益也。",
        "from": "X16n0312_001:0394a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘諸聖單念自佛。",
        "from": "X16n0312_001:0394a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯屬現修現證。",
        "from": "X16n0312_001:0394a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故揀則全揀。",
        "from": "X16n0312_001:0394a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不逗此土機宜。",
        "from": "X16n0312_001:0394a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不合此方教體故也。",
        "from": "X16n0312_001:0394a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有志修證者。",
        "from": "X16n0312_001:0394a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可以深長思矣。",
        "from": "X16n0312_001:0394a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此為信力未堅者說。",
        "from": "X16n0312_001:0394a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若果深信淨土。",
        "from": "X16n0312_001:0394a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱令楞嚴獨貶勢至。",
        "from": "X16n0312_001:0394a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦自不疑。",
        "from": "X16n0312_001:0394a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X16n0312_001:0394a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以他經廣讚故。",
        "from": "X16n0312_001:0394a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰不可思議功德。",
        "from": "X16n0312_001:0394a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰世間難信之法。",
        "from": "X16n0312_001:0394a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰一切佛護念。",
        "from": "X16n0312_001:0394a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰無上深妙禪。",
        "from": "X16n0312_001:0394a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰勝異方便。",
        "from": "X16n0312_001:0394a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰三昧中王。",
        "from": "X16n0312_001:0394a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多處極讚。",
        "from": "X16n0312_001:0394a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既不生信。",
        "from": "X16n0312_001:0394a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一處乍眨。",
        "from": "X16n0312_001:0394a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何輙生疑。",
        "from": "X16n0312_001:0394a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而況曾不獨貶。",
        "from": "X16n0312_001:0394a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而況復示暗選乎。",
        "from": "X16n0312_001:0394a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈末世眾生讀此經者。",
        "from": "X16n0312_001:0394a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既不能依教從耳門深入現證圓通。",
        "from": "X16n0312_001:0394a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏於念佛法門好起疑惑。",
        "from": "X16n0312_001:0394a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至破他淨信。",
        "from": "X16n0312_001:0394a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障他善行。",
        "from": "X16n0312_001:0394b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄福少智人。",
        "from": "X16n0312_001:0394b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往往習氣如是。",
        "from": "X16n0312_001:0394b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故茲約法依經。",
        "from": "X16n0312_001:0394b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曲為辯析。",
        "from": "X16n0312_001:0394b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自知其辭之叢沓也。",
        "from": "X16n0312_001:0394b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈得已哉。",
        "from": "X16n0312_001:0394b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首楞嚴經勢至圓通章解(終)",
        "from": "X16n0312_001:0394b04_0",
        "context_with_next_sentence": false
    }
]