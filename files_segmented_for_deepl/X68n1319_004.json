[
    {
        "source_sentence": "御製序",
        "from": "X68n1319_004:0527a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫佛祖代代相承。",
        "from": "X68n1319_004:0527a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱為父子。",
        "from": "X68n1319_004:0527a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖曰假世間之名教。",
        "from": "X68n1319_004:0527a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表出世之真傳。",
        "from": "X68n1319_004:0527a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然大死大活。",
        "from": "X68n1319_004:0527a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而慧命斯續。",
        "from": "X68n1319_004:0527a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視屬毛離裏而四大和合者。",
        "from": "X68n1319_004:0527a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為生身。",
        "from": "X68n1319_004:0527a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為無生身。",
        "from": "X68n1319_004:0527a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同是實際。",
        "from": "X68n1319_004:0527a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本非引喻也。",
        "from": "X68n1319_004:0527a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永明云。",
        "from": "X68n1319_004:0527a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾即俗歸真。",
        "from": "X68n1319_004:0527a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫疇茲旨。",
        "from": "X68n1319_004:0527a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃刻從凡入聖。",
        "from": "X68n1319_004:0527a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難報斯恩。",
        "from": "X68n1319_004:0527a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫㧞火宅而登清凉之山。",
        "from": "X68n1319_004:0527a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開迷雲而入光明之海。",
        "from": "X68n1319_004:0527a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴視頭刺膠盆。",
        "from": "X68n1319_004:0527a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身同繭縛之時。",
        "from": "X68n1319_004:0527a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正所謂如人飲水。",
        "from": "X68n1319_004:0527a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冷暖自知。",
        "from": "X68n1319_004:0527a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有不念皮肉骨髓所由來者乎。",
        "from": "X68n1319_004:0527a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫非父子也。",
        "from": "X68n1319_004:0527a24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而其中父子濟美。",
        "from": "X68n1319_004:0527a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以溈仰為最。",
        "from": "X68n1319_004:0527a24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當日提唱一聲。",
        "from": "X68n1319_004:0527a24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啐啄一時。",
        "from": "X68n1319_004:0527b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同稟法王之正令。",
        "from": "X68n1319_004:0527b01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共現瑠璃之金身。",
        "from": "X68n1319_004:0527b01_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一堂兩琴。",
        "from": "X68n1319_004:0527b02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼓宮而宮應。",
        "from": "X68n1319_004:0527b02_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼓商而商應。",
        "from": "X68n1319_004:0527b02_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一奩兩鏡。",
        "from": "X68n1319_004:0527b02_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡來而皆胡。",
        "from": "X68n1319_004:0527b03_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漢來而皆漢。",
        "from": "X68n1319_004:0527b03_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上妙旨。",
        "from": "X68n1319_004:0527b03_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊轉金輪。",
        "from": "X68n1319_004:0527b03_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一代法門。",
        "from": "X68n1319_004:0527b03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙標銅柱。",
        "from": "X68n1319_004:0527b04_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋溈山．仰山之父子。",
        "from": "X68n1319_004:0527b04_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正同寒山．拾得之弟兄。",
        "from": "X68n1319_004:0527b04_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法中。",
        "from": "X68n1319_004:0527b05_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世間所云家慶人瑞者矣。",
        "from": "X68n1319_004:0527b05_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故合為一編。",
        "from": "X68n1319_004:0527b05_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為天下後世宗徒勸。",
        "from": "X68n1319_004:0527b06_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為序。",
        "from": "X68n1319_004:0527b06_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍正十一年癸丑五月朔日",
        "from": "X68n1319_004:0527b07_0",
        "context_with_next_sentence": false
    }
]