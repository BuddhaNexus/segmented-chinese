[
    {
        "source_sentence": "念佛三昧　(出檀几叢書二集卷二十三)姑蘇　金人瑞　聖歎　著娑婆世界。",
        "from": "X62n1190_001:0470b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋尊住持。",
        "from": "X62n1190_001:0470b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華藏世界。",
        "from": "X62n1190_001:0470b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盧舍那世尊住持。",
        "from": "X62n1190_001:0470b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋尊新成佛。",
        "from": "X62n1190_001:0470b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盧舍那本成佛也。",
        "from": "X62n1190_001:0470b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他方世界。",
        "from": "X62n1190_001:0470b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有阿彌陀佛。",
        "from": "X62n1190_001:0470b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住于極樂國土。",
        "from": "X62n1190_001:0470b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一花一世尊。",
        "from": "X62n1190_001:0470b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非算數譬喻之所能及。",
        "from": "X62n1190_001:0470b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以阿彌陀經。",
        "from": "X62n1190_001:0470b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為無問自說經。",
        "from": "X62n1190_001:0470b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首題佛說阿彌陀。",
        "from": "X62n1190_001:0470b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下加不得一佛字。",
        "from": "X62n1190_001:0470b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然燈佛者。",
        "from": "X62n1190_001:0470b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一微塵佛也。",
        "from": "X62n1190_001:0470b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦佛者。",
        "from": "X62n1190_001:0470b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量微塵佛也。",
        "from": "X62n1190_001:0470b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦佛者。",
        "from": "X62n1190_001:0470b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為病愈。",
        "from": "X62n1190_001:0470b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀者。",
        "from": "X62n1190_001:0470b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名本無病。",
        "from": "X62n1190_001:0470b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊說阿彌陀經。",
        "from": "X62n1190_001:0470b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "另一施設。",
        "from": "X62n1190_001:0470b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸經不同。",
        "from": "X62n1190_001:0470b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是為一切眾生。",
        "from": "X62n1190_001:0470b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟不能破我故。",
        "from": "X62n1190_001:0470b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特地全舉法界。",
        "from": "X62n1190_001:0470b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說你本住在極樂國土中。",
        "from": "X62n1190_001:0470b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各蓮花化生。",
        "from": "X62n1190_001:0470b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有甚不好。",
        "from": "X62n1190_001:0470b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如醜婦人一般。",
        "from": "X62n1190_001:0470b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貯之洞房深宮。",
        "from": "X62n1190_001:0470b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦自覺標致也。",
        "from": "X62n1190_001:0470b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜怒哀樂四字。",
        "from": "X62n1190_001:0470b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以樂為極。",
        "from": "X62n1190_001:0470b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以知之學者。",
        "from": "X62n1190_001:0470b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好之聖人。",
        "from": "X62n1190_001:0470b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂之即天地也。",
        "from": "X62n1190_001:0470b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮花取相連義曰蓮。",
        "from": "X62n1190_001:0470b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(三世相連花有房房有蔤)因非實相曰花。",
        "from": "X62n1190_001:0470b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一眾生。",
        "from": "X62n1190_001:0470b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各坐一花。",
        "from": "X62n1190_001:0470b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花開見佛。",
        "from": "X62n1190_001:0470b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則見釋迦佛也。",
        "from": "X62n1190_001:0470b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極樂國土九品化生。",
        "from": "X62n1190_001:0470b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上品上生者。",
        "from": "X62n1190_001:0470b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是彌勒一生補處。",
        "from": "X62n1190_001:0470b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于此成佛。",
        "from": "X62n1190_001:0470b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下品下生者。",
        "from": "X62n1190_001:0470b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是阿鼻大地獄罪人。",
        "from": "X62n1190_001:0470b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于此成佛。",
        "from": "X62n1190_001:0470b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人因犯極惡大罪。",
        "from": "X62n1190_001:0470b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下阿鼻獄有善知識。",
        "from": "X62n1190_001:0470c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種因緣。",
        "from": "X62n1190_001:0470c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱阿彌陀佛。",
        "from": "X62n1190_001:0470c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如千年暗室。",
        "from": "X62n1190_001:0470c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一燈照之。",
        "from": "X62n1190_001:0470c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此罪人聞此名字。",
        "from": "X62n1190_001:0470c02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄即在蓮花中。",
        "from": "X62n1190_001:0470c02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此蓮花。",
        "from": "X62n1190_001:0470c03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即在極樂國土中。",
        "from": "X62n1190_001:0470c03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此極樂國土。",
        "from": "X62n1190_001:0470c03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為阿彌陀佛世界中。",
        "from": "X62n1190_001:0470c04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此阿彌陀佛世界。",
        "from": "X62n1190_001:0470c04_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃即在無量大地獄內一罪人之八識田中。",
        "from": "X62n1190_001:0470c04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人總犯極惡大罪。",
        "from": "X62n1190_001:0470c05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敵阿彌陀名字。",
        "from": "X62n1190_001:0470c06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以地獄應時粉碎。",
        "from": "X62n1190_001:0470c06_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此謂下品下生也。",
        "from": "X62n1190_001:0470c06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩不願住於惡濁世界。",
        "from": "X62n1190_001:0470c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不得不求生極樂。",
        "from": "X62n1190_001:0470c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而得生極樂。",
        "from": "X62n1190_001:0470c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是果事。",
        "from": "X62n1190_001:0470c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲獲果者。",
        "from": "X62n1190_001:0470c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須造因。",
        "from": "X62n1190_001:0470c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何造因。",
        "from": "X62n1190_001:0470c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛三昧是也。",
        "from": "X62n1190_001:0470c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛之法。",
        "from": "X62n1190_001:0470c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以妄心念于遙佛。",
        "from": "X62n1190_001:0470c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不可以妄心念於妄心。",
        "from": "X62n1190_001:0470c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X62n1190_001:0470c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄心者。",
        "from": "X62n1190_001:0470c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是生死因。",
        "from": "X62n1190_001:0470c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能感通于本際故。",
        "from": "X62n1190_001:0470c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以生死因不能感通故。",
        "from": "X62n1190_001:0470c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故佛本不遙而遂遙也。",
        "from": "X62n1190_001:0470c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次妄心念于妄心者。",
        "from": "X62n1190_001:0470c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫正為妄心連持。",
        "from": "X62n1190_001:0470c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至墮地獄。",
        "from": "X62n1190_001:0470c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今復教以如是念佛。",
        "from": "X62n1190_001:0470c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼即以前妄心為念。",
        "from": "X62n1190_001:0470c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後妄心為佛。",
        "from": "X62n1190_001:0470c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以前妄心為佛。",
        "from": "X62n1190_001:0470c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後妄心為念。",
        "from": "X62n1190_001:0470c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是即與世間流浪何異。",
        "from": "X62n1190_001:0470c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此法所不應用。",
        "from": "X62n1190_001:0470c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫念佛之法。",
        "from": "X62n1190_001:0470c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應先見佛次作念。",
        "from": "X62n1190_001:0470c17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正應先念成次見佛。",
        "from": "X62n1190_001:0470c17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "X62n1190_001:0470c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若先見佛。",
        "from": "X62n1190_001:0470c18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛是何事。",
        "from": "X62n1190_001:0470c18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名為大妄語人。",
        "from": "X62n1190_001:0470c18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又即使感應道交。",
        "from": "X62n1190_001:0470c18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛或示現。",
        "from": "X62n1190_001:0470c19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然佛來尋念佛去久矣。",
        "from": "X62n1190_001:0470c19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又況能念正是妄心。",
        "from": "X62n1190_001:0470c19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄心何可唐突於佛。",
        "from": "X62n1190_001:0470c20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂先念成次見佛者。",
        "from": "X62n1190_001:0470c20_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念是實。",
        "from": "X62n1190_001:0470c21_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛是假。",
        "from": "X62n1190_001:0470c21_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩以本際為念。",
        "from": "X62n1190_001:0470c21_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以妄心為佛。",
        "from": "X62n1190_001:0470c21_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問何故不以妄心為念。",
        "from": "X62n1190_001:0470c22_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本際為佛。",
        "from": "X62n1190_001:0470c22_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答本際者不可見。",
        "from": "X62n1190_001:0470c22_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可見則不能令行人發歡喜心。",
        "from": "X62n1190_001:0470c23_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又本際纖塵不立。",
        "from": "X62n1190_001:0470c23_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行人於念處用力。",
        "from": "X62n1190_001:0470c24_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即大不應。",
        "from": "X62n1190_001:0470c24_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又師子乳用玻瓈盞盛。",
        "from": "X62n1190_001:0470c24_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他器不受。",
        "from": "X62n1190_001:0471a01_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行人欲以妄心念本際。",
        "from": "X62n1190_001:0471a01_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如毒器盛師子乳。",
        "from": "X62n1190_001:0471a01_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終竟不受。",
        "from": "X62n1190_001:0471a02_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又念佛三昧。",
