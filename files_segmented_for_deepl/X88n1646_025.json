[
    {
        "source_sentence": "居士傳二十五",
        "from": "X88n1646_025:0228a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉潘許郭陳吳傳",
        "from": "X88n1646_025:0228a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劉興朝名經臣。",
        "from": "X88n1646_025:0228a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不詳其里居。",
        "from": "X88n1646_025:0228a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年三十餘。",
        "from": "X88n1646_025:0228a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會東林照覺總公。",
        "from": "X88n1646_025:0228a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始究心祖道。",
        "from": "X88n1646_025:0228a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而抵京師。",
        "from": "X88n1646_025:0228a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁慧林冲公。",
        "from": "X88n1646_025:0228a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冲舉或問雪竇如何是諸佛本源。",
        "from": "X88n1646_025:0228a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰千峯寒色。",
        "from": "X88n1646_025:0228a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言下有省。",
        "from": "X88n1646_025:0228a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而官洛中。",
        "from": "X88n1646_025:0228a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就參韶山杲公。",
        "from": "X88n1646_025:0228a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杲囑曰。",
        "from": "X88n1646_025:0228a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公如此用心。",
        "from": "X88n1646_025:0228a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何愁不悟。",
        "from": "X88n1646_025:0228a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾後或有非常境界。",
        "from": "X88n1646_025:0228a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量歡喜。",
        "from": "X88n1646_025:0228a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜急收拾。",
        "from": "X88n1646_025:0228a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若收拾得去。",
        "from": "X88n1646_025:0228a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便成法器。",
        "from": "X88n1646_025:0228a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "否則將成失心之疾矣。",
        "from": "X88n1646_025:0228a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未幾復至京師參正覺逸公。",
        "from": "X88n1646_025:0228a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逸曰。",
        "from": "X88n1646_025:0228a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古人言平常心是道。",
        "from": "X88n1646_025:0228a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你十二時中放光動地不自覺知。",
        "from": "X88n1646_025:0228a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向外馳求。",
        "from": "X88n1646_025:0228a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉踈轉遠。",
        "from": "X88n1646_025:0228a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興朝益疑不解。",
        "from": "X88n1646_025:0228a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕入室。",
        "from": "X88n1646_025:0228a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逸舉波羅提尊者見性是佛語詰之。",
        "from": "X88n1646_025:0228a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能對。",
        "from": "X88n1646_025:0228a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑甚。",
        "from": "X88n1646_025:0228a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂歸就寢。",
        "from": "X88n1646_025:0228a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至五更而覺。",
        "from": "X88n1646_025:0228a16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方追念間。",
        "from": "X88n1646_025:0228a16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見種種異相。",
        "from": "X88n1646_025:0228a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表裏通徹。",
        "from": "X88n1646_025:0228a17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根震動。",
        "from": "X88n1646_025:0228a17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天地回旋。",
        "from": "X88n1646_025:0228a17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲開月現。",
        "from": "X88n1646_025:0228a17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜不自勝。",
        "from": "X88n1646_025:0228a18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽憶韶山臨別語。",
        "from": "X88n1646_025:0228a18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姑抑之。",
        "from": "X88n1646_025:0228a18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向明以告逸。",
        "from": "X88n1646_025:0228a18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逸曰更須用得始得。",
        "from": "X88n1646_025:0228a19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興朝曰莫要踐履否。",
        "from": "X88n1646_025:0228a19_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逸厲聲曰。",
        "from": "X88n1646_025:0228a19_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這个是甚麼事。",
        "from": "X88n1646_025:0228a20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却說踐履。",
        "from": "X88n1646_025:0228a20_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興朝默契。",
        "from": "X88n1646_025:0228a20_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃作發明心地頌及明道喻儒篇以曉世。",
        "from": "X88n1646_025:0228a20_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其略曰。",
        "from": "X88n1646_025:0228a21_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人之於道。",
        "from": "X88n1646_025:0228a21_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶魚之於水。",
        "from": "X88n1646_025:0228a21_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞須臾離也。",
        "from": "X88n1646_025:0228a22_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯其迷己逐物。",
        "from": "X88n1646_025:0228a22_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故終身由之而不知。",
        "from": "X88n1646_025:0228a22_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛曰大覺。",
        "from": "X88n1646_025:0228a23_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儒曰先覺。",
        "from": "X88n1646_025:0228a23_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖覺此耳。",
        "from": "X88n1646_025:0228a23_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔人有言曰。",
        "from": "X88n1646_025:0228a23_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今古應無墜。",
        "from": "X88n1646_025:0228a24_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分明在目前。",
        "from": "X88n1646_025:0228a24_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_025:0228a24_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大道祇在目前。",
        "from": "X88n1646_025:0228a24_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要且目前難覩。",
        "from": "X88n1646_025:0228a24_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲識大道真體。",
        "from": "X88n1646_025:0228b01_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離聲色言語。",
        "from": "X88n1646_025:0228b01_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_025:0228b01_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜夜抱佛眠。",
        "from": "X88n1646_025:0228b01_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝朝還共起。",
        "from": "X88n1646_025:0228b02_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起倒鎮相隨。",
        "from": "X88n1646_025:0228b02_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語默同居止。",
        "from": "X88n1646_025:0228b02_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲識佛去處。",
        "from": "X88n1646_025:0228b02_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇這語聲是。",
        "from": "X88n1646_025:0228b03_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此佛者之語道為最親者。",
        "from": "X88n1646_025:0228b03_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立則見其參於前也。",
        "from": "X88n1646_025:0228b03_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在輿則見其倚於衡也。",
        "from": "X88n1646_025:0228b04_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻之在前也。",
        "from": "X88n1646_025:0228b04_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽焉在後也。",
        "from": "X88n1646_025:0228b05_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取之左右逢其原也。",
        "from": "X88n1646_025:0228b05_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此儒者語道最邇者。",
        "from": "X88n1646_025:0228b05_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何此道唯心可傳。",
        "from": "X88n1646_025:0228b06_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不立文字。",
        "from": "X88n1646_025:0228b06_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故世尊拈花而妙心傳於迦葉。",
        "from": "X88n1646_025:0228b06_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達摩面壁而宗旨付於神光。",
        "from": "X88n1646_025:0228b07_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六葉既敷。",
        "from": "X88n1646_025:0228b07_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千花競秀。",
        "from": "X88n1646_025:0228b08_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分宗列派。",
        "from": "X88n1646_025:0228b08_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有門庭。",
        "from": "X88n1646_025:0228b08_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故或瞬目揚眉擎拳舉指。",
        "from": "X88n1646_025:0228b08_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或行棒行喝竪拂拈搥。",
        "from": "X88n1646_025:0228b09_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或持叉張弓輥毬舞笏。",
        "from": "X88n1646_025:0228b09_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或拽石搬土打鼓吹毛。",
        "from": "X88n1646_025:0228b10_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一默一言一吁一笑。",
        "from": "X88n1646_025:0228b10_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至種種方便皆是親切為人。",
        "from": "X88n1646_025:0228b10_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然祇為太親。",
        "from": "X88n1646_025:0228b11_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故人多罔措。",
        "from": "X88n1646_025:0228b11_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞥然見者不隔絲毫。",
        "from": "X88n1646_025:0228b12_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其或沉吟迢迢萬里。",
        "from": "X88n1646_025:0228b12_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明道者宜無忽焉。",
        "from": "X88n1646_025:0228b12_90",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予之有得。",
        "from": "X88n1646_025:0228b13_91",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實在此門。",
        "from": "X88n1646_025:0228b13_92",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反思吾儒。",
        "from": "X88n1646_025:0228b13_93",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自有其道。",
        "from": "X88n1646_025:0228b13_94",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良哉孔子之言。",
        "from": "X88n1646_025:0228b14_95",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默而識之。",
        "from": "X88n1646_025:0228b14_96",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一以貫之。",
        "from": "X88n1646_025:0228b14_97",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故目擊而道存。",
        "from": "X88n1646_025:0228b14_98",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指掌而意喻。",
        "from": "X88n1646_025:0228b15_99",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡若此者。",
        "from": "X88n1646_025:0228b15_100",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆合宗門之妙旨。",
        "from": "X88n1646_025:0228b15_101",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得教外之真機。",
        "from": "X88n1646_025:0228b15_102",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然孔子之道傳之子思。",
        "from": "X88n1646_025:0228b16_103",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子思傳之孟子。",
        "from": "X88n1646_025:0228b16_104",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孟子既歿。",
        "from": "X88n1646_025:0228b16_105",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得其傳。",
        "from": "X88n1646_025:0228b17_106",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而所傳於世者特文字耳。",
        "from": "X88n1646_025:0228b17_107",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予之學必求自得而後已。",
        "from": "X88n1646_025:0228b17_108",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸予一夕開悟。",
        "from": "X88n1646_025:0228b18_109",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡目之所見。",
        "from": "X88n1646_025:0228b18_110",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳之所聞。",
        "from": "X88n1646_025:0228b18_111",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心之所思。",
        "from": "X88n1646_025:0228b19_112",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口之所談。",
        "from": "X88n1646_025:0228b19_113",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手足之所運動。",
        "from": "X88n1646_025:0228b19_114",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非妙者。",
        "from": "X88n1646_025:0228b19_115",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得之既久。",
        "from": "X88n1646_025:0228b19_116",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日益見前。",
        "from": "X88n1646_025:0228b20_117",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每以與人。",
        "from": "X88n1646_025:0228b20_118",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人不能受。",
        "from": "X88n1646_025:0228b20_119",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後知其妙道果不可以文字傳也。",
        "from": "X88n1646_025:0228b20_120",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼是道也。",
        "from": "X88n1646_025:0228b21_121",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有其人則傳。",
        "from": "X88n1646_025:0228b21_122",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無其人則絕。",
        "from": "X88n1646_025:0228b21_123",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予既得之矣。",
        "from": "X88n1646_025:0228b22_124",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰其似之乎(五燈會元)。",
        "from": "X88n1646_025:0228b22_125",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潘延之名興嗣。",
        "from": "X88n1646_025:0228b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家豫章東湖上。",
        "from": "X88n1646_025:0228b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懷道耽隱。",
        "from": "X88n1646_025:0228b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自嘉祐以來公卿交章薦不起。",
        "from": "X88n1646_025:0228b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琴書自娛。",
        "from": "X88n1646_025:0228b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號清逸居士。",
        "from": "X88n1646_025:0228b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞問道於黃龍南公。",
        "from": "X88n1646_025:0228b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其密意。",
        "from": "X88n1646_025:0228c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日南公弟子源公訪之。",
        "from": "X88n1646_025:0228c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見其拂琴次。",
        "from": "X88n1646_025:0228c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "源公曰老老大大猶弄個線索在。",
        "from": "X88n1646_025:0228c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對曰也要彈教響。",
        "from": "X88n1646_025:0228c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "源曰也不少。",
        "from": "X88n1646_025:0228c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對曰知心能幾人。",
        "from": "X88n1646_025:0228c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺範洪公題其像曰。",
        "from": "X88n1646_025:0228c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毗盧無生之藏。",
        "from": "X88n1646_025:0228c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震旦有道之器。",
        "from": "X88n1646_025:0228c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "談妙義借身為舌。",
        "from": "X88n1646_025:0228c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擎大千以手為地。",
        "from": "X88n1646_025:0228c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機鋒不減龐蘊而解文字禪。",
        "from": "X88n1646_025:0228c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行藏大類孺子而值休明世。",
        "from": "X88n1646_025:0228c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒王強之而不可。",
        "from": "X88n1646_025:0228c06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神考致之而不起。",
        "from": "X88n1646_025:0228c06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此天下士大夫所共聞。",
        "from": "X88n1646_025:0228c07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然公豈止於是而已哉(石門文字禪．金湯徵文錄)。",
        "from": "X88n1646_025:0228c07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許叔矜名式。",
        "from": "X88n1646_025:0228c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘇州人。",
        "from": "X88n1646_025:0228c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉進士。",
        "from": "X88n1646_025:0228c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名著雍咸間。",
        "from": "X88n1646_025:0228c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官尚書祠部郎中。",
        "from": "X88n1646_025:0228c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出知洪州。",
        "from": "X88n1646_025:0228c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參洞山曉聰。",
        "from": "X88n1646_025:0228c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得正法眼。",
        "from": "X88n1646_025:0228c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞贈曉聰詩。",
        "from": "X88n1646_025:0228c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有句云。",
        "from": "X88n1646_025:0228c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜坐連雲石。",
        "from": "X88n1646_025:0228c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春栽帶雨松。",
        "from": "X88n1646_025:0228c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日與泐潭澄．上藍溥坐頃。",
        "from": "X88n1646_025:0228c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泐潭問曰。",
        "from": "X88n1646_025:0228c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜坐連雲石。",
        "from": "X88n1646_025:0228c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春栽帶雨松。",
        "from": "X88n1646_025:0228c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當時答洞山甚麼語。",
        "from": "X88n1646_025:0228c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叔矜曰今日放衙早。",
        "from": "X88n1646_025:0228c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泐潭曰。",
        "from": "X88n1646_025:0228c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞答泗州大聖揚州出現語是否。",
        "from": "X88n1646_025:0228c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叔矜曰。",
        "from": "X88n1646_025:0228c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別點茶來。",
        "from": "X88n1646_025:0228c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泐潭曰名不虗傳。",
        "from": "X88n1646_025:0228c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叔矜曰和尚早晚回山。",
        "from": "X88n1646_025:0228c15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泐潭曰今日被上藍覷破。",
        "from": "X88n1646_025:0228c15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上藍便喝。",
        "from": "X88n1646_025:0228c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泐潭曰須你始得。",
        "from": "X88n1646_025:0228c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叔矜曰。",
        "from": "X88n1646_025:0228c16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不奈船何。",
        "from": "X88n1646_025:0228c16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "打破戽斗。",
        "from": "X88n1646_025:0228c17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後官至轉運使。",
        "from": "X88n1646_025:0228c17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒贈禮部尚書(五燈會元．蘇州志)。",
        "from": "X88n1646_025:0228c17_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郭功父名祥正。",
        "from": "X88n1646_025:0228c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當塗人也。",
        "from": "X88n1646_025:0228c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母夢李太白而生。",
        "from": "X88n1646_025:0228c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及長工詩。",
        "from": "X88n1646_025:0228c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熙寧中知武岡縣僉書保信軍節度判官。",
        "from": "X88n1646_025:0228c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋致仕。",
        "from": "X88n1646_025:0228c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱於青山。",
        "from": "X88n1646_025:0228c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自號淨空居士。",
        "from": "X88n1646_025:0228c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渡江謁舒州白雲端公。",
        "from": "X88n1646_025:0228c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白雲上堂曰。",
        "from": "X88n1646_025:0228c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜來枕上作得一頌。",
        "from": "X88n1646_025:0228c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謝功父遠訪之勤。",
        "from": "X88n1646_025:0228c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須舉似諸方。",
        "from": "X88n1646_025:0228c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要與天下有鼻孔衲僧脫却著肉汗衫。",
        "from": "X88n1646_025:0228c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫言不道。",
        "from": "X88n1646_025:0228c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃曰。",
        "from": "X88n1646_025:0228c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上大人。",
        "from": "X88n1646_025:0228c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邱乙己。",
        "from": "X88n1646_025:0228c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化三千。",
        "from": "X88n1646_025:0228c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七十士。",
        "from": "X88n1646_025:0228c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾小生。",
        "from": "X88n1646_025:0228c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八九子。",
        "from": "X88n1646_025:0229a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佳作仁。",
        "from": "X88n1646_025:0229a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可知禮也。",
        "from": "X88n1646_025:0229a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功父切疑。",
        "from": "X88n1646_025:0229a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後聞小兒誦之。",
        "from": "X88n1646_025:0229a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有省。",
        "from": "X88n1646_025:0229a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以書報白雲。",
        "from": "X88n1646_025:0229a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白雲以偈答曰。",
        "from": "X88n1646_025:0229a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏身不用縮頭。",
        "from": "X88n1646_025:0229a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斂跡何須收脚。",
        "from": "X88n1646_025:0229a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金烏半夜撩天。",
        "from": "X88n1646_025:0229a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉兔趕他不著。",
        "from": "X88n1646_025:0229a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日白雲問曰牛淳乎。",
        "from": "X88n1646_025:0229a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰淳矣。",
        "from": "X88n1646_025:0229a04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白雲叱之。",
        "from": "X88n1646_025:0229a04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功父拱手而立。",
        "from": "X88n1646_025:0229a04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白雲曰淳乎淳乎。",
        "from": "X88n1646_025:0229a05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃贈偈曰。",
        "from": "X88n1646_025:0229a05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛來山中。",
        "from": "X88n1646_025:0229a05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水足草足。",
        "from": "X88n1646_025:0229a05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛出山去。",
        "from": "X88n1646_025:0229a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東觸西觸。",
        "from": "X88n1646_025:0229a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞到雲居請佛印升座。",
        "from": "X88n1646_025:0229a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈香曰。",
        "from": "X88n1646_025:0229a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺地相逢一何早。",
        "from": "X88n1646_025:0229a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鶻臭布衫今脫了。",
        "from": "X88n1646_025:0229a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要識雲居一句玄。",
        "from": "X88n1646_025:0229a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珍重後園驢喫草。",
        "from": "X88n1646_025:0229a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召大眾曰。",
        "from": "X88n1646_025:0229a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一瓣香薰天炙地去也。",
        "from": "X88n1646_025:0229a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛印曰。",
        "from": "X88n1646_025:0229a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日不著便。",
        "from": "X88n1646_025:0229a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被這漢當面塗糊。",
        "from": "X88n1646_025:0229a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便打。",
        "from": "X88n1646_025:0229a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃曰。",
        "from": "X88n1646_025:0229a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謝公千里來相訪。",
        "from": "X88n1646_025:0229a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共話東山竹徑深。",
        "from": "X88n1646_025:0229a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "借與一龍騎出洞。",
        "from": "X88n1646_025:0229a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若逢天旱便為霖。",
        "from": "X88n1646_025:0229a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲拄杖下座。",
        "from": "X88n1646_025:0229a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功父拜起。",
        "from": "X88n1646_025:0229a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛印曰收得龍麼。",
        "from": "X88n1646_025:0229a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功父曰已在這裏。",
        "from": "X88n1646_025:0229a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛印曰作麼生騎。",
        "from": "X88n1646_025:0229a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功父擺手作舞便行。",
        "from": "X88n1646_025:0229a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛印拊掌曰祇有這漢猶較些子。",
        "from": "X88n1646_025:0229a13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後復起知端州。",
        "from": "X88n1646_025:0229a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋棄去。",
        "from": "X88n1646_025:0229a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老於家(東都事略．五燈會元)。",
        "from": "X88n1646_025:0229a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳體常名易。",
        "from": "X88n1646_025:0229a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家蔡溪之左巖。",
        "from": "X88n1646_025:0229a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少好學。",
        "from": "X88n1646_025:0229a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "該綜經史。",
        "from": "X88n1646_025:0229a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熙寧初應試。",
        "from": "X88n1646_025:0229a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即棄去。",
        "from": "X88n1646_025:0229a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與釋氏論出世法。",
        "from": "X88n1646_025:0229a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞作頌曰。",
        "from": "X88n1646_025:0229a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密坐研窮有細微。",
        "from": "X88n1646_025:0229a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到頭須是自忘機。",
        "from": "X88n1646_025:0229a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應無祖佛能超越。",
        "from": "X88n1646_025:0229a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有冤親更順違。",
        "from": "X88n1646_025:0229a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷歷孤明猶認影。",
        "from": "X88n1646_025:0229a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巍巍獨露尚披衣。",
        "from": "X88n1646_025:0229a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻嗟會得昭靈者。",
        "from": "X88n1646_025:0229a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "也道尋常得旨歸。",
        "from": "X88n1646_025:0229a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其二曰。",
        "from": "X88n1646_025:0229a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "個中端的有誰知。",
        "from": "X88n1646_025:0229a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知者歸來到者稀。",
        "from": "X88n1646_025:0229a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見即聞還錯會。",
        "from": "X88n1646_025:0229a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離聲離色轉乖違。",
        "from": "X88n1646_025:0229a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山青水綠明元旨。",
        "from": "X88n1646_025:0229a21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鶴唳猿啼顯妙機。",
        "from": "X88n1646_025:0229a21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有意覓渠終不遇。",
        "from": "X88n1646_025:0229a21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無心到處盡逢伊。",
        "from": "X88n1646_025:0229a22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇寧中舉遺逸。",
        "from": "X88n1646_025:0229a22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又舉八行。",
        "from": "X88n1646_025:0229a22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郡守郭重致禮聘之。",
        "from": "X88n1646_025:0229a23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體常謝牋曰。",
        "from": "X88n1646_025:0229a23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "早粗修於八行。",
        "from": "X88n1646_025:0229a23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚但了於一心。",
        "from": "X88n1646_025:0229a24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心既本無。",
        "from": "X88n1646_025:0229a24_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行亦何有。",
        "from": "X88n1646_025:0229a24_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平生無忤視妄言。",
        "from": "X88n1646_025:0229a24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或語老莊釋氏大意則亹亹忘倦。",
        "from": "X88n1646_025:0229b01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣和八年跏趺而逝(漁隱叢話．法喜志)。",
        "from": "X88n1646_025:0229b01_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳德夫名恂。",
        "from": "X88n1646_025:0229b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不詳其里居。",
        "from": "X88n1646_025:0229b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元豐元年任豫章法曹。",
        "from": "X88n1646_025:0229b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時郡帥王韶迎晦堂禪師入城。",
        "from": "X88n1646_025:0229b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舘於大梵院。",
        "from": "X88n1646_025:0229b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咨訪大法。",
        "from": "X88n1646_025:0229b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德夫亦往叩焉。",
        "from": "X88n1646_025:0229b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晦堂曰。",
        "from": "X88n1646_025:0229b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公平生學解即不問。",
        "from": "X88n1646_025:0229b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母未生已前道將一句來。",
        "from": "X88n1646_025:0229b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德夫不能對。",
        "from": "X88n1646_025:0229b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日閱傳燈錄至鄧隱峯倒卓而化。",
        "from": "X88n1646_025:0229b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其衣順體不退。",
        "from": "X88n1646_025:0229b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深以為疑。",
        "from": "X88n1646_025:0229b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復趨問晦堂。",
        "from": "X88n1646_025:0229b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晦堂笑曰。",
        "from": "X88n1646_025:0229b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公今侍立。",
        "from": "X88n1646_025:0229b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是順耶是逆也。",
        "from": "X88n1646_025:0229b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰是順。",
        "from": "X88n1646_025:0229b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晦堂曰還疑否。",
        "from": "X88n1646_025:0229b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰不疑。",
        "from": "X88n1646_025:0229b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晦堂曰。",
        "from": "X88n1646_025:0229b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自既不疑。",
        "from": "X88n1646_025:0229b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何疑於彼。",
        "from": "X88n1646_025:0229b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德夫言下大徹。",
        "from": "X88n1646_025:0229b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說偈曰。",
        "from": "X88n1646_025:0229b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咄這多知俗漢。",
        "from": "X88n1646_025:0229b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齩盡古今公案。",
        "from": "X88n1646_025:0229b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽於狼籍堆頭。",
        "from": "X88n1646_025:0229b11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拾得蜣螂糞彈。",
        "from": "X88n1646_025:0229b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明明不直分文。",
        "from": "X88n1646_025:0229b11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬兩黃金不換。",
        "from": "X88n1646_025:0229b11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等閒拈出示人。",
        "from": "X88n1646_025:0229b12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇為走盤難看。",
        "from": "X88n1646_025:0229b12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時韶亦於晦堂得法。",
        "from": "X88n1646_025:0229b12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述頌曰。",
        "from": "X88n1646_025:0229b13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝曾忘食夜忘眠。",
        "from": "X88n1646_025:0229b13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧得驪珠欲上天。",
        "from": "X88n1646_025:0229b13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却向自身都放下。",
        "from": "X88n1646_025:0229b14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四稜榻地恰團圓。",
        "from": "X88n1646_025:0229b14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後德夫官至秘書(五燈會元．林間錄)。",
        "from": "X88n1646_025:0229b14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_025:0229b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀諸賢問答及所論著。",
        "from": "X88n1646_025:0229b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心地法門豁如矣。",
        "from": "X88n1646_025:0229b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迹其出處之際。",
        "from": "X88n1646_025:0229b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "類能不繫於物。",
        "from": "X88n1646_025:0229b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非其驗耶。",
        "from": "X88n1646_025:0229b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以視夏竦．呂惠卿之徒。",
        "from": "X88n1646_025:0229b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濫廁傳燈者。",
        "from": "X88n1646_025:0229b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相去何如也。",
        "from": "X88n1646_025:0229b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳曰。",
        "from": "X88n1646_025:0229b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷歷孤明。",
        "from": "X88n1646_025:0229b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巍巍獨坐。",
        "from": "X88n1646_025:0229b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近來居士頗有這般人物否。",
        "from": "X88n1646_025:0229b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有則叫他到大紳門下來看箭。",
        "from": "X88n1646_025:0229b20_4",
        "context_with_next_sentence": false
    }
]