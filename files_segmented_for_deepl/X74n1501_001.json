[
    {
        "source_sentence": "釋迦降生禮讚文(并序)",
        "from": "X74n1501_001:1070c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霅谿沙門　仁岳　譔",
        "from": "X74n1501_001:1070c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧祇律云。",
        "from": "X74n1501_001:1070c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛生日乃至涅槃日。",
        "from": "X74n1501_001:1070c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為大眾稱揚佛德。",
        "from": "X74n1501_001:1070c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予早歲讀大涅槃經。",
        "from": "X74n1501_001:1070c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採雙林示滅之相。",
        "from": "X74n1501_001:1070c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譔偈以聲之。",
        "from": "X74n1501_001:1070c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比有吾宗好事者。",
        "from": "X74n1501_001:1070c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請四月八日浴佛形像次。",
        "from": "X74n1501_001:1070c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦陳讚頌。",
        "from": "X74n1501_001:1070c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所貴僧祇之式始終備焉。",
        "from": "X74n1501_001:1070c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是討太子本起及因果等經所說事類。",
        "from": "X74n1501_001:1070c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略為十讚。",
        "from": "X74n1501_001:1070c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并五悔法次第于後。",
        "from": "X74n1501_001:1070c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "原夫如來應物之相。",
        "from": "X74n1501_001:1070c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機見有殊。",
        "from": "X74n1501_001:1070c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故乘白象入胎。",
        "from": "X74n1501_001:1070c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御香樓託陰。",
        "from": "X74n1501_001:1070c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可同也。",
        "from": "X74n1501_001:1070c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今依小教。",
        "from": "X74n1501_001:1070c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇就鹿苑已前取其行因趣果之事以成章句。",
        "from": "X74n1501_001:1070c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若五時化迹。",
        "from": "X74n1501_001:1070c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非此具道。",
        "from": "X74n1501_001:1070c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟曰狂斐。",
        "from": "X74n1501_001:1070c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試為裁之。",
        "from": "X74n1501_001:1070c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(道場僧集。",
        "from": "X74n1501_001:1070c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先禮三寶。",
        "from": "X74n1501_001:1070c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次浴佛像。",
        "from": "X74n1501_001:1070c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互跪燒香。",
        "from": "X74n1501_001:1070c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有偈辭。",
        "from": "X74n1501_001:1070c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "附于卷末)。",
        "from": "X74n1501_001:1070c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粤若三光照世無盛於日輪。",
        "from": "X74n1501_001:1070c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四聖化人最尊於佛道。",
        "from": "X74n1501_001:1070c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然以大明易度。",
        "from": "X74n1501_001:1070c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正覺難逢。",
        "from": "X74n1501_001:1070c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故長夜之彌昏。",
        "from": "X74n1501_001:1070c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致羣生之弗悟。",
        "from": "X74n1501_001:1070c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏自仁賢劫減。",
        "from": "X74n1501_001:1070c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濁惡趣增。",
        "from": "X74n1501_001:1070c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當堪忍以無師。",
        "from": "X74n1501_001:1070c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會能儒而出世。",
        "from": "X74n1501_001:1070c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示同剎利。",
        "from": "X74n1501_001:1070c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非為七寶之王。",
        "from": "X74n1501_001:1070c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取證菩提。",
        "from": "X74n1501_001:1070c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂作千華之主。",
        "from": "X74n1501_001:1070c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形聲赴物。",
        "from": "X74n1501_001:1070c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝劣隨機。",
        "from": "X74n1501_001:1070c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化儀雖有於始終。",
        "from": "X74n1501_001:1070c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真法本無於來去。",
        "from": "X74n1501_001:1070c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今值三時春季八相生辰。",
        "from": "X74n1501_001:1070c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懷疇昔之因緣。",
        "from": "X74n1501_001:1070c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢申讚詠。",
        "from": "X74n1501_001:1070c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備以時之供養。",
        "from": "X74n1501_001:1070c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊表勤誠。",
        "from": "X74n1501_001:1070c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願聖慈俯垂明鑒。",
        "from": "X74n1501_001:1070c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請堪忍世界示現降生釋迦文佛。",
        "from": "X74n1501_001:1070c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願降臨道場受我供養。",
        "from": "X74n1501_001:1071a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　天上天下無如佛　　十方世界亦無比　世間所有我盡見　　一切無有如佛者(至此或陳敘。",
        "from": "X74n1501_001:1071a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或宣疏稱佛等。",
        "from": "X74n1501_001:1071a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以臨時自裁。",
        "from": "X74n1501_001:1071a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後禮讚。",
        "from": "X74n1501_001:1071a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱云)。",
        "from": "X74n1501_001:1071a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮然燈佛所受能仁記莂時身釋迦文佛。",
        "from": "X74n1501_001:1071a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆例此)　過去久行菩薩道　　爾時值佛號然燈　曾為摩納奉慈悲　　因與瞿夷修供養　布髮掩泥承足下　　散華成葢住空中　從茲法忍得無生　　親受釋迦文佛記故我一心歸命頂禮。",
        "from": "X74n1501_001:1071a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆例此)。",
        "from": "X74n1501_001:1071a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮兜率天上示一生補處時身",
        "from": "X74n1501_001:1071a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一生當證能仁果　　補處爰升喜樂天　既超欲地在空居　　時為勞生談正法　劫火莫能焚此界　　毫光仍得照諸禪　佇觀機熟下生來　　普使盲冥開慧眼一心頂禮迦維衛國託摩耶懷妊時身。",
        "from": "X74n1501_001:1071a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　託識后妃名大術　　流光中印屬迦維　應夢潛通玉象形　　處胎真是金輪種　十月已宣聲密教　　諸天先見相嚴身　仁賢劫內大空虗　　將慶曇華時一現一心頂禮無憂樹下誕王妃右脇時身。",
        "from": "X74n1501_001:1071a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　聖后入園攀樹次　　怡然右脇產金軀　纔行七步現殊祥　　復指二儀稱最勝　天雨細香皆潤澤　　地開伏藏悉精明　珍重阿夷百歲人　　占言相好當成佛一心頂禮東宮受職現納妃厭欲時身。",
        "from": "X74n1501_001:1071a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　太子玅年方齒學　　父王求娉得耶輸　雖將五欲每勾牽　　但見諸根常寂靜　蓮生濁水心元淨　　金在紅爐體莫渝　徒增寶媛鎮相隨　　終被智刀刲愛網一心頂禮四門遊觀覩無常樂道時身。",
        "from": "X74n1501_001:1071b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　嚴駕四門觀四相　　淨居天子化諸塗　始逢衰老歎無常　　後見真僧欣有道　聖意豈存行樂事　　空聲唯贊出塵緣　指腹留娠嗣父王　　一心秪待離宮室一心頂禮春宮午夜踰國城出俗時身。",
        "from": "X74n1501_001:1071b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　天語出家時已至　　便捐王國指他山　中宵禁闥自然開　　千里神駒超忽去　車匿還宮迷遠道　　耶輸懷子守空帷　萬乘追蹤竟不迴　　翻令淨飯遙瞻禮一心頂禮伽耶山內修六年苦行時身。",
        "from": "X74n1501_001:1071b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　五人侍衛皆中止　　六載修行且外求　雪嶺無春任苦寒　　朱顏未老同顦顇　麻麥充飢寧是道　　斷常習定亦非真　斯為方便化眾生　　漸引邪徒歸正覺一心頂禮熙連河畔受難陀施食時身。",
        "from": "X74n1501_001:1071b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大權將應人天供　　先受難陀獻乳糜　菩薩雖資玅色身　　遮那豈假珍羞味　落髮已歸忉利主　　傳衣元自飲光師　行看道樹近菩提　　步步方輿皆震動一心頂禮金剛座上降天魔成道時身。",
        "from": "X74n1501_001:1071b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　籍草結趺過永夜　　圓成三十四心時　九地塵勞既斷除　　六天魔事俱降伏　大梵佇聞甘露鼓　　羣生來覲紫金山　由是隨宜轉法輪　　人到于今咸受賜(至此復跪。",
        "from": "X74n1501_001:1071c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秉鑪運想。",
        "from": "X74n1501_001:1071c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "披陳五悔)。",
        "from": "X74n1501_001:1071c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懺悔",
        "from": "X74n1501_001:1071c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等自從有識。",
        "from": "X74n1501_001:1071c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順無明。",
        "from": "X74n1501_001:1071c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在惡趣以悠長。",
        "from": "X74n1501_001:1071c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任苦輪而旋轉。",
        "from": "X74n1501_001:1071c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛興忍界。",
        "from": "X74n1501_001:1071c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不逢萬德之尊。",
        "from": "X74n1501_001:1071c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法被勞生。",
        "from": "X74n1501_001:1071c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫奉一音之教。",
        "from": "X74n1501_001:1071c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以罪根深固。",
        "from": "X74n1501_001:1071c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善種微冥。",
        "from": "X74n1501_001:1071c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非應化之有偏。",
        "from": "X74n1501_001:1071c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃業緣之為障。",
        "from": "X74n1501_001:1071c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶賴貝書西載。",
        "from": "X74n1501_001:1071c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "筏喻東流。",
        "from": "X74n1501_001:1071c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞於我佛降生。",
        "from": "X74n1501_001:1071c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似值於爾時歸命。",
        "from": "X74n1501_001:1071c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲欣兩集。",
        "from": "X74n1501_001:1071c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慙愧重增。",
        "from": "X74n1501_001:1071c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今對道場。",
        "from": "X74n1501_001:1071c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故伸懺悔。",
        "from": "X74n1501_001:1071c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔已。",
        "from": "X74n1501_001:1071c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命三寶。",
        "from": "X74n1501_001:1071c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(餘皆例此)。",
        "from": "X74n1501_001:1071c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心勸請",
        "from": "X74n1501_001:1071c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭請十方法界諸佛世尊。",
        "from": "X74n1501_001:1071c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生五濁之鄉。",
        "from": "X74n1501_001:1071c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當說三乘之道。",
        "from": "X74n1501_001:1071c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧雲所覆。",
        "from": "X74n1501_001:1071c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法雨其[雨/旁]。",
        "from": "X74n1501_001:1071c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶使羣萌悉皆充潤。",
        "from": "X74n1501_001:1071c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心隨喜",
        "from": "X74n1501_001:1071c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有世間出世一切善根。",
        "from": "X74n1501_001:1071c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無漏之真乘。",
        "from": "X74n1501_001:1071c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有為之福聚。",
        "from": "X74n1501_001:1071c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆隨喜。",
        "from": "X74n1501_001:1071c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靡擇怨親。",
        "from": "X74n1501_001:1071c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "期未來時。",
        "from": "X74n1501_001:1071c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會平等地。",
        "from": "X74n1501_001:1071c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心迴向",
        "from": "X74n1501_001:1071c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此如來功德少分稱揚。",
        "from": "X74n1501_001:1072a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡迴向於真空。",
        "from": "X74n1501_001:1072a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及莊嚴於佛果。",
        "from": "X74n1501_001:1072a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦冀多生所集眾善。",
        "from": "X74n1501_001:1072a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無遺普施有情。",
        "from": "X74n1501_001:1072a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同成實道。",
        "from": "X74n1501_001:1072a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心發願",
        "from": "X74n1501_001:1072a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我自凡至聖。",
        "from": "X74n1501_001:1072a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此界他方。",
        "from": "X74n1501_001:1072a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧於有佛之時。",
        "from": "X74n1501_001:1072a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸覩降靈之相。",
        "from": "X74n1501_001:1072a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初聞音教便入於大乘。",
        "from": "X74n1501_001:1072a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓出塵勞即登於彼岸。",
        "from": "X74n1501_001:1072a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(右旋道場。",
        "from": "X74n1501_001:1072a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱釋迦佛號。",
        "from": "X74n1501_001:1072a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或諷安樂行品。",
        "from": "X74n1501_001:1072a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡誠而退)。",
        "from": "X74n1501_001:1072a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦降生禮讚文(終)",
        "from": "X74n1501_001:1072a08_0",
        "context_with_next_sentence": false
    }
]