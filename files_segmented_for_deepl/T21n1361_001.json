[
    {
        "source_sentence": "六門陀羅尼經論(附廣釋)",
        "from": "T21n1361_001:0878b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世親菩薩造",
        "from": "T21n1361_001:0878b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此陀羅尼經以六義故。",
        "from": "T21n1361_001:0878b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說一慧圓滿。",
        "from": "T21n1361_001:0878b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二慈力清淨。",
        "from": "T21n1361_001:0878b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三自性清淨。",
        "from": "T21n1361_001:0878b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四令知他所作障。",
        "from": "T21n1361_001:0878b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五攝一切菩提資糧。",
        "from": "T21n1361_001:0878b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六彼果正智及真如也。",
        "from": "T21n1361_001:0878b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有異門。",
        "from": "T21n1361_001:0878b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一於苦時攝取有情界。",
        "from": "T21n1361_001:0878b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二於樂時攝取有情界。",
        "from": "T21n1361_001:0878b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三於自斷資糧障。",
        "from": "T21n1361_001:0878b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四於他斷資糧障。",
        "from": "T21n1361_001:0878b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五積集一切資糧。",
        "from": "T21n1361_001:0878b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六所集資糧為自利滿及顯利他滿也。",
        "from": "T21n1361_001:0878b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有異門。",
        "from": "T21n1361_001:0878b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從正遍知而退還者。",
        "from": "T21n1361_001:0878b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有其六因。",
        "from": "T21n1361_001:0878b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一棄背有情於生死苦不能安受。",
        "from": "T21n1361_001:0878b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二於世富樂有執著心。",
        "from": "T21n1361_001:0878b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三而積諸障。",
        "from": "T21n1361_001:0878b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四隨順惡友之所傾動。",
        "from": "T21n1361_001:0878b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五不集資糧。",
        "from": "T21n1361_001:0878b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六而於諸有圓滿等法。",
        "from": "T21n1361_001:0878b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有習近心及未著心。",
        "from": "T21n1361_001:0878b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對治彼故。",
        "from": "T21n1361_001:0878b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其次第而說六門。",
        "from": "T21n1361_001:0878b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一第二而則顯其苦分位不捨有情成熟有情。",
        "from": "T21n1361_001:0878b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五即能成熟佛法。",
        "from": "T21n1361_001:0878b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三第四斷除障故。",
        "from": "T21n1361_001:0878b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能成就自彼之二。",
        "from": "T21n1361_001:0878b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六顯示聲聞獨覺不共之果清淨法身無超過故。",
        "from": "T21n1361_001:0878b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能行於利生行故。",
        "from": "T21n1361_001:0878b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名住於盡生死際。",
        "from": "T21n1361_001:0878b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有異門。",
        "from": "T21n1361_001:0878b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以四淨心而當開示。",
        "from": "T21n1361_001:0878b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一了法無我故。",
        "from": "T21n1361_001:0878b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒有情及流轉苦而不傾動。",
        "from": "T21n1361_001:0878b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二於富盛時而不起於有情之見迷等雜染。",
        "from": "T21n1361_001:0878b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三與不清淨因麁重之果能生之力而不隨順。",
        "from": "T21n1361_001:0878b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四而能斷除彼增長因。",
        "from": "T21n1361_001:0878b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加行清淨者當知。",
        "from": "T21n1361_001:0878b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於波羅蜜多相應善根而起加行。",
        "from": "T21n1361_001:0878b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨心果者無上之智。",
        "from": "T21n1361_001:0878b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加行清淨者即是解脫。",
        "from": "T21n1361_001:0878b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂轉依。",
        "from": "T21n1361_001:0878b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上之智及於解脫而非加行清淨果耶。",
        "from": "T21n1361_001:0878b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故經言。",
        "from": "T21n1361_001:0878c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我諸所有波羅蜜多所攝一切世及出世廣大善根。",
        "from": "T21n1361_001:0878c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸有情皆當速證無上智果等。",
        "from": "T21n1361_001:0878c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是說。",
        "from": "T21n1361_001:0878c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波羅蜜多若有圓滿。",
        "from": "T21n1361_001:0878c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯清淨心不能生長無上智果。",
        "from": "T21n1361_001:0878c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說彼名為波羅蜜多之果。",
        "from": "T21n1361_001:0878c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種類同故。",
        "from": "T21n1361_001:0878c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上之智當知即是淨心果也。",
        "from": "T21n1361_001:0878c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼二之果二俱所攝。",
        "from": "T21n1361_001:0878c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨心加行更互相待為究竟故。",
        "from": "T21n1361_001:0878c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂由所有一切資糧無所得心修習迴向即得正智。",
        "from": "T21n1361_001:0878c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及於如來諸餘功德是彼因故。",
        "from": "T21n1361_001:0878c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不如是。",
        "from": "T21n1361_001:0878c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所修淨心而空其果。",
        "from": "T21n1361_001:0878c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又即彼二亦復名為而不住於流轉涅槃。",
        "from": "T21n1361_001:0878c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼二因平等智慧大悲所攝。",
        "from": "T21n1361_001:0878c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂即彼法之所成故。",
        "from": "T21n1361_001:0878c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為取如是大功德故。",
        "from": "T21n1361_001:0878c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩所有一切善根應當如是而迴向之。",
        "from": "T21n1361_001:0878c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此則名為所有善根廣大迴向。",
        "from": "T21n1361_001:0878c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是所修六行之者。",
        "from": "T21n1361_001:0878c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得六功德。",
        "from": "T21n1361_001:0878c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其次第。",
        "from": "T21n1361_001:0878c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有菩薩具足如是善根之者。",
        "from": "T21n1361_001:0878c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一流轉生死微薄受苦。",
        "from": "T21n1361_001:0878c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼不能壞。",
        "from": "T21n1361_001:0878c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二而常唯受無盡廣大富貴世樂。",
        "from": "T21n1361_001:0878c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及能成熟無量無邊有情之果。",
        "from": "T21n1361_001:0878c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三以無障礙速攝善根。",
        "from": "T21n1361_001:0878c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於善歡喜及有勝得解。",
        "from": "T21n1361_001:0878c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四於諸菩薩而不見有微細忘誤。",
        "from": "T21n1361_001:0878c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善觀斷除。",
        "from": "T21n1361_001:0878c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五速成資糧及能證得成種智定。",
        "from": "T21n1361_001:0878c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六盡諸世界及有情界現利生事成就彼故。",
        "from": "T21n1361_001:0878c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六門陀羅尼經論一卷",
        "from": "T21n1361_001:0878c23_0",
        "context_with_next_sentence": false
    }
]