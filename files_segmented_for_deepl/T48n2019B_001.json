[
    {
        "source_sentence": "誡初心學人文",
        "from": "T48n2019B_001:1004b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫初心之人。",
        "from": "T48n2019B_001:1004b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須遠離惡友親近賢善。",
        "from": "T48n2019B_001:1004b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受五戒十戒等。",
        "from": "T48n2019B_001:1004b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知持犯開遮。",
        "from": "T48n2019B_001:1004b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依金口聖言。",
        "from": "T48n2019B_001:1004b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫順庸流妄說。",
        "from": "T48n2019B_001:1004b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既已出家參陪清眾。",
        "from": "T48n2019B_001:1004b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常念柔和善順不得我慢貢高。",
        "from": "T48n2019B_001:1004b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大者為兄小者為弟。",
        "from": "T48n2019B_001:1004b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儻有諍者兩說和合。",
        "from": "T48n2019B_001:1004b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以慈心相向。",
        "from": "T48n2019B_001:1004b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得惡語傷人。",
        "from": "T48n2019B_001:1004b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若也欺凌同伴論說是非。",
        "from": "T48n2019B_001:1004b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此出家全無利益。",
        "from": "T48n2019B_001:1004b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財色之禍甚於毒蛇省己知非常須遠離。",
        "from": "T48n2019B_001:1004b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣事則不得入他房院。",
        "from": "T48n2019B_001:1004b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當屏處不得強知他事。",
        "from": "T48n2019B_001:1004b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非六日不得洗浣內衣。",
        "from": "T48n2019B_001:1004b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨盥漱不得高聲涕唾。",
        "from": "T48n2019B_001:1004b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行益次不得搪揬越序。",
        "from": "T48n2019B_001:1004b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經行次不得開襟掉臂。",
        "from": "T48n2019B_001:1004b15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言談次不得高聲戲笑。",
        "from": "T48n2019B_001:1004b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非要事不得出於門外。",
        "from": "T48n2019B_001:1004b16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有病人須慈心守護。",
        "from": "T48n2019B_001:1004b17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見賓客須欣然迎接。",
        "from": "T48n2019B_001:1004b17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逢尊長須肅恭迴避。",
        "from": "T48n2019B_001:1004b18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦道具須儉約知足。",
        "from": "T48n2019B_001:1004b18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋食時飲啜不得作聲執放。",
        "from": "T48n2019B_001:1004b19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要須安詳不得舉顏顧視。",
        "from": "T48n2019B_001:1004b19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得欣厭精麁。",
        "from": "T48n2019B_001:1004b20_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須默無言說。",
        "from": "T48n2019B_001:1004b20_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須防護雜念。",
        "from": "T48n2019B_001:1004b21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知受食但療形枯為成道業。",
        "from": "T48n2019B_001:1004b21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須念般若心經觀三輪清淨不違道用。",
        "from": "T48n2019B_001:1004b22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赴焚修須早暮勤行自貴懈怠。",
        "from": "T48n2019B_001:1004b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知眾行次不得雜亂。",
        "from": "T48n2019B_001:1004b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚唄呪願須誦文觀義。",
        "from": "T48n2019B_001:1004b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得但隨音聲。",
        "from": "T48n2019B_001:1004b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得韻曲不調。",
        "from": "T48n2019B_001:1004b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻敬尊顏不得攀緣異境。",
        "from": "T48n2019B_001:1004b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知自身罪障猶如山海。",
        "from": "T48n2019B_001:1004b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知理懺事懺可以消除。",
        "from": "T48n2019B_001:1004b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深觀能禮所禮皆從真性緣起。",
        "from": "T48n2019B_001:1004b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深信感應不虛影響相從。",
        "from": "T48n2019B_001:1004b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居眾寮須相讓不爭。",
        "from": "T48n2019B_001:1004b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須遞相扶護。",
        "from": "T48n2019B_001:1004b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎詳論勝負。",
        "from": "T48n2019B_001:1004b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎聚頭閑話。",
        "from": "T48n2019B_001:1004b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎誤著他鞋。",
        "from": "T48n2019B_001:1004b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎坐臥越次。",
        "from": "T48n2019B_001:1004c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對客言談不得揚於家醜。",
        "from": "T48n2019B_001:1004c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但讚院門佛事。",
        "from": "T48n2019B_001:1004c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得詣庫房見聞雜事自生疑惑。",
        "from": "T48n2019B_001:1004c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非要事不得遊州獵縣。",
        "from": "T48n2019B_001:1004c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與俗交通令他憎嫉失自道情。",
        "from": "T48n2019B_001:1004c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儻有要事出行。",
        "from": "T48n2019B_001:1004c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告住持人及管眾者。",
        "from": "T48n2019B_001:1004c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令知去處。",
        "from": "T48n2019B_001:1004c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入俗家切須堅持正念。",
        "from": "T48n2019B_001:1004c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎勿見色聞聲流蕩邪心。",
        "from": "T48n2019B_001:1004c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又況披襟戲笑亂說雜事。",
        "from": "T48n2019B_001:1004c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非時酒食妄作無礙之行深乖佛戒。",
        "from": "T48n2019B_001:1004c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又處賢善人嫌疑之間。",
        "from": "T48n2019B_001:1004c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈為有智慧人也。",
        "from": "T48n2019B_001:1004c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住社堂慎沙彌同行。",
        "from": "T48n2019B_001:1004c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎人事往還。",
        "from": "T48n2019B_001:1004c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎見他好惡。",
        "from": "T48n2019B_001:1004c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎貪求文字。",
        "from": "T48n2019B_001:1004c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎睡眠過度。",
        "from": "T48n2019B_001:1004c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎散亂攀緣。",
        "from": "T48n2019B_001:1004c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遇示師陞座說法。",
        "from": "T48n2019B_001:1004c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切不得於法作懸崖想生退屈心。",
        "from": "T48n2019B_001:1004c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作串聞想生容易心。",
        "from": "T48n2019B_001:1004c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須虛懷聞之。",
        "from": "T48n2019B_001:1004c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有機發之時。",
        "from": "T48n2019B_001:1004c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得隨學語者但取口辦。",
        "from": "T48n2019B_001:1004c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂蛇飲水成毒。",
        "from": "T48n2019B_001:1004c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛飲水成乳。",
        "from": "T48n2019B_001:1004c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智學成菩提。",
        "from": "T48n2019B_001:1004c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚學成生死是也。",
        "from": "T48n2019B_001:1004c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不得於主法人生輕薄想。",
        "from": "T48n2019B_001:1004c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因之於道有障。",
        "from": "T48n2019B_001:1004c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能進修切須慎之。",
        "from": "T48n2019B_001:1004c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論云。",
        "from": "T48n2019B_001:1004c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人夜行罪人執炬當路。",
        "from": "T48n2019B_001:1004c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以人惡故不受光明。",
        "from": "T48n2019B_001:1004c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮坑落塹去矣。",
        "from": "T48n2019B_001:1004c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞法之次如履薄氷。",
        "from": "T48n2019B_001:1004c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必須側耳目而聽玄音。",
        "from": "T48n2019B_001:1004c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅情塵而賞幽致。",
        "from": "T48n2019B_001:1004c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下堂後默坐觀之。",
        "from": "T48n2019B_001:1004c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如有所疑博問先覺。",
        "from": "T48n2019B_001:1004c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夕惕朝詢不濫絲髮。",
        "from": "T48n2019B_001:1004c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃可能生正信。",
        "from": "T48n2019B_001:1004c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以道為懷者歟。",
        "from": "T48n2019B_001:1004c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始習熟愛欲恚癡纏綿意地。",
        "from": "T48n2019B_001:1004c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫伏還起如隔日瘧。",
        "from": "T48n2019B_001:1004c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切時中直須用加行方便智慧之力痛自遮護。",
        "from": "T48n2019B_001:1004c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可閑謾遊談無根虛喪天日。",
        "from": "T48n2019B_001:1004c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲冀心宗而求出路哉。",
        "from": "T48n2019B_001:1004c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但堅志節責躬匪懈。",
        "from": "T48n2019B_001:1004c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知非遷善改悔調柔。",
        "from": "T48n2019B_001:1004c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修而觀力轉深。",
        "from": "T48n2019B_001:1004c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鍊磨而行門益淨。",
        "from": "T48n2019B_001:1004c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長起難遭之想道業恒新。",
        "from": "T48n2019B_001:1004c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常懷慶幸之心終不退轉。",
        "from": "T48n2019B_001:1004c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是久久自然定慧圓明見自心性。",
        "from": "T48n2019B_001:1004c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用如幻悲智還度眾生。",
        "from": "T48n2019B_001:1004c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作人天大福田。",
        "from": "T48n2019B_001:1004c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切須勉之。",
        "from": "T48n2019B_001:1005a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泰和乙丑冬月。",
        "from": "T48n2019B_001:1005a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海東曹溪山老衲知訥誌。",
        "from": "T48n2019B_001:1005a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皖山正凝禪師示蒙山法語",
        "from": "T48n2019B_001:1005a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師見蒙山來禮。",
        "from": "T48n2019B_001:1005a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先自問云。",
        "from": "T48n2019B_001:1005a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾還信得及麼。",
        "from": "T48n2019B_001:1005a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山云。",
        "from": "T48n2019B_001:1005a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若信不及不到這裏。",
        "from": "T48n2019B_001:1005a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "T48n2019B_001:1005a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十分信得更要持戒。",
        "from": "T48n2019B_001:1005a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒易得靈驗。",
        "from": "T48n2019B_001:1005a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無戒行如空中架樓閣。",
        "from": "T48n2019B_001:1005a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還持戒麼山云。",
        "from": "T48n2019B_001:1005a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見持五戒。",
        "from": "T48n2019B_001:1005a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "T48n2019B_001:1005a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此後只看箇無字。",
        "from": "T48n2019B_001:1005a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不要思量卜度。",
        "from": "T48n2019B_001:1005a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得作有無解會。",
        "from": "T48n2019B_001:1005a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且莫看經教語錄之類。",
        "from": "T48n2019B_001:1005a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只單單提箇無字。",
        "from": "T48n2019B_001:1005a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於十二時中四威儀內。",
        "from": "T48n2019B_001:1005a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須要惺惺如猫捕鼠如鷄抱卵無令斷續。",
        "from": "T48n2019B_001:1005a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得透徹時。",
        "from": "T48n2019B_001:1005a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如老鼠咬棺材相似不可改移。",
        "from": "T48n2019B_001:1005a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時復鞭起疑云。",
        "from": "T48n2019B_001:1005a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切含靈皆有佛性。",
        "from": "T48n2019B_001:1005a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州因甚道無意作麼生。",
        "from": "T48n2019B_001:1005a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有疑時默默提箇無字迴光自看。",
        "from": "T48n2019B_001:1005a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只這箇無字要識得自己。",
        "from": "T48n2019B_001:1005a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要識得趙州。",
        "from": "T48n2019B_001:1005a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要捉敗佛祖得人憎處。",
        "from": "T48n2019B_001:1005a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但信我如此說話。",
        "from": "T48n2019B_001:1005a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驀直做將去。",
        "from": "T48n2019B_001:1005a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定有發明時節。",
        "from": "T48n2019B_001:1005a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷不誤爾。",
        "from": "T48n2019B_001:1005a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云云。",
        "from": "T48n2019B_001:1005a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東山崇藏主送子行脚法語",
        "from": "T48n2019B_001:1005a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大凡行脚須以此道為懷。",
        "from": "T48n2019B_001:1005a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可受現成供養了等閑過日。",
        "from": "T48n2019B_001:1005a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須是將生死二字釘在額上。",
        "from": "T48n2019B_001:1005a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二時中裂轉面皮。",
        "from": "T48n2019B_001:1005a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "討箇分曉始得。",
        "from": "T48n2019B_001:1005a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若秖隨群逐隊打空過時。",
        "from": "T48n2019B_001:1005a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他時閻羅老子打算飯錢。",
        "from": "T48n2019B_001:1005a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫道我與爾不說。",
        "from": "T48n2019B_001:1005a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若做工夫須要日日打算時時點檢。",
        "from": "T48n2019B_001:1005a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自轉鼓起來至二更看。",
        "from": "T48n2019B_001:1005a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那裏是不得力處。",
        "from": "T48n2019B_001:1005a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那裏是打失處。",
        "from": "T48n2019B_001:1005a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那裏是不打失處。",
        "from": "T48n2019B_001:1005a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如此做將去。",
        "from": "T48n2019B_001:1005a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定有到家時節。",
        "from": "T48n2019B_001:1005a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一般辦道之人經不看佛不禮。",
        "from": "T48n2019B_001:1005a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔上薄團便打瞌睡。",
        "from": "T48n2019B_001:1005a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及至醒來又且胡思亂想。",
        "from": "T48n2019B_001:1005a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔下禪床便與人打雜交。",
        "from": "T48n2019B_001:1005a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如此辦道至彌勒下生。",
        "from": "T48n2019B_001:1005a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "也未有入手底時節。",
        "from": "T48n2019B_001:1005a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須是猛著精彩提起一箇無字。",
        "from": "T48n2019B_001:1005b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝三夜三與他廝睚。",
        "from": "T48n2019B_001:1005b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可坐在無事甲裏。",
        "from": "T48n2019B_001:1005b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不可執在蒲團上死坐。",
        "from": "T48n2019B_001:1005b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須要活弄。",
        "from": "T48n2019B_001:1005b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐雜念紛飛起時千萬。",
        "from": "T48n2019B_001:1005b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可與他廝鬪轉鬪轉急。",
        "from": "T48n2019B_001:1005b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多有人在這裏不識進退解免不下。",
        "from": "T48n2019B_001:1005b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成風成顛壞了一生。",
        "from": "T48n2019B_001:1005b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須向紛飛起處輕輕放下打一箇。",
        "from": "T48n2019B_001:1005b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉身下地行一遭。",
        "from": "T48n2019B_001:1005b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又上床開兩眼揑雙拳。",
        "from": "T48n2019B_001:1005b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪起脊梁依前提起。",
        "from": "T48n2019B_001:1005b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便覺清涼。",
        "from": "T48n2019B_001:1005b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一鍋湯攙下一杓冷水相似。",
        "from": "T48n2019B_001:1005b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但如此做工夫。",
        "from": "T48n2019B_001:1005b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日久月深自有到家時節。",
        "from": "T48n2019B_001:1005b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "工夫未得入手。",
        "from": "T48n2019B_001:1005b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫生煩惱。",
        "from": "T48n2019B_001:1005b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐煩惱魔入心。",
        "from": "T48n2019B_001:1005b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若覺省力不可生歡喜。",
        "from": "T48n2019B_001:1005b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐歡喜魔入心。",
        "from": "T48n2019B_001:1005b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種病痛言之不盡。",
        "from": "T48n2019B_001:1005b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐眾中有老成兄弟辦道者。",
        "from": "T48n2019B_001:1005b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千萬時時請益。",
        "from": "T48n2019B_001:1005b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無將祖師做工夫底言語看一遍。",
        "from": "T48n2019B_001:1005b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如親見相似。",
        "from": "T48n2019B_001:1005b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今此道難得其人。",
        "from": "T48n2019B_001:1005b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千萬向前望汝早早打破漆桶歸來為我揩背。",
        "from": "T48n2019B_001:1005b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至囑至囑。",
        "from": "T48n2019B_001:1005b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙山和尚示眾語",
        "from": "T48n2019B_001:1005b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有來此同甘寂寥者。",
        "from": "T48n2019B_001:1005b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨此世緣除去執著顛倒。",
        "from": "T48n2019B_001:1005b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實為生死大事。",
        "from": "T48n2019B_001:1005b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肯順庵中規矩。",
        "from": "T48n2019B_001:1005b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "截斷人事隨緣受用。",
        "from": "T48n2019B_001:1005b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除三更外不許睡眠。",
        "from": "T48n2019B_001:1005b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許出街。",
        "from": "T48n2019B_001:1005b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許赴請。",
        "from": "T48n2019B_001:1005b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有發明不許看讀。",
        "from": "T48n2019B_001:1005b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非公界請不許閱經。",
        "from": "T48n2019B_001:1005b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法下三年工夫。",
        "from": "T48n2019B_001:1005b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不見性通宗。",
        "from": "T48n2019B_001:1005b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧替爾入地獄。",
        "from": "T48n2019B_001:1005b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後跋",
        "from": "T48n2019B_001:1005b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫心者。",
        "from": "T48n2019B_001:1005b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是世間出世間萬法之總相也。",
        "from": "T48n2019B_001:1005b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬法即是心之別相。",
        "from": "T48n2019B_001:1005b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其別有五。",
        "from": "T48n2019B_001:1005b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一肉團心。",
        "from": "T48n2019B_001:1005b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀如蕉蕾。",
        "from": "T48n2019B_001:1005b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生色身中。",
        "from": "T48n2019B_001:1005b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "係無情攝。",
        "from": "T48n2019B_001:1005b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二緣慮心。",
        "from": "T48n2019B_001:1005b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀若野燒。",
        "from": "T48n2019B_001:1005b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽生忽滅。",
        "from": "T48n2019B_001:1005c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "係妄想攝。",
        "from": "T48n2019B_001:1005c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三集起心。",
        "from": "T48n2019B_001:1005c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀如草子。",
        "from": "T48n2019B_001:1005c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "埋伏識田。",
        "from": "T48n2019B_001:1005c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "係習氣攝。",
        "from": "T48n2019B_001:1005c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四賴耶心。",
        "from": "T48n2019B_001:1005c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀如良田。",
        "from": "T48n2019B_001:1005c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納種無厭。",
        "from": "T48n2019B_001:1005c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "係無明攝。",
        "from": "T48n2019B_001:1005c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五真如心。",
        "from": "T48n2019B_001:1005c03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀同虛空。",
        "from": "T48n2019B_001:1005c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓徹法界。",
        "from": "T48n2019B_001:1005c04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "係寂照攝。",
        "from": "T48n2019B_001:1005c04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已上五心。",
        "from": "T48n2019B_001:1005c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前四皆妄念念生滅後一是真。",
        "from": "T48n2019B_001:1005c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三際一如。",
        "from": "T48n2019B_001:1005c05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不揀辯分明。",
        "from": "T48n2019B_001:1005c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶恐認妄為真。",
        "from": "T48n2019B_001:1005c06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其失非小。",
        "from": "T48n2019B_001:1005c06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故引佛經祖語。",
        "from": "T48n2019B_001:1005c06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問辯徵釋。",
        "from": "T48n2019B_001:1005c07_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開示迷妄根源。",
        "from": "T48n2019B_001:1005c07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指陳修證本末。",
        "from": "T48n2019B_001:1005c07_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第一十六章。",
        "from": "T48n2019B_001:1005c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始於正信。",
        "from": "T48n2019B_001:1005c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終乎所往。",
        "from": "T48n2019B_001:1005c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深明真心之捷徑。",
        "from": "T48n2019B_001:1005c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名直說。",
        "from": "T48n2019B_001:1005c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予獲是書。",
        "from": "T48n2019B_001:1005c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僅十餘載。",
        "from": "T48n2019B_001:1005c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝夕觀覽。",
        "from": "T48n2019B_001:1005c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為棲神之祕要。",
        "from": "T48n2019B_001:1005c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日出示眾。",
        "from": "T48n2019B_001:1005c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信善士感節庵。",
        "from": "T48n2019B_001:1005c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士陳普忠。",
        "from": "T48n2019B_001:1005c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慨然樂施綉梓流傳。",
        "from": "T48n2019B_001:1005c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶修心之士觀之者。",
        "from": "T48n2019B_001:1005c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感悟真心之妙。",
        "from": "T48n2019B_001:1005c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逈出直說之表也。",
        "from": "T48n2019B_001:1005c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為跋。",
        "from": "T48n2019B_001:1005c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正統十二年歲在丁卯。",
        "from": "T48n2019B_001:1005c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臘月八日大天界蒙堂比丘。",
        "from": "T48n2019B_001:1005c14_1",
        "context_with_next_sentence": false
    }
]