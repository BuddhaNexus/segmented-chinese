[
    {
        "source_sentence": "消除一切閃電障難隨求如意陀",
        "from": "T21n1402_001:0918b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅尼經",
        "from": "T21n1402_001:0918b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天北印度烏填曩國帝釋宮寺",
        "from": "T21n1402_001:0918b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏傳法大師賜紫沙門臣",
        "from": "T21n1402_001:0918b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施護奉　詔譯",
        "from": "T21n1402_001:0918b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1402_001:0918b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國精舍之中。",
        "from": "T21n1402_001:0918b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告尊者阿難陀言。",
        "from": "T21n1402_001:0918b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽有消除一切閃電障難隨求如意陀羅尼經。",
        "from": "T21n1402_001:0918b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去如來無上正等正覺之所宣說。",
        "from": "T21n1402_001:0918b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我今者恒常悲慜。",
        "from": "T21n1402_001:0918b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益天上人間一切群生得安樂故。",
        "from": "T21n1402_001:0918b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復宣說。",
        "from": "T21n1402_001:0918b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀言如是世尊願樂欲聞。",
        "from": "T21n1402_001:0918b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊告言。",
        "from": "T21n1402_001:0918b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀東方有電名阿伽曩(宋言無厚)南方有電名舍多嚕(宋言順流)西方有電名放光明。",
        "from": "T21n1402_001:0918b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方有電名燥那麼尼(宋言百生樹)。",
        "from": "T21n1402_001:0918b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀若有族姓男族姓女。",
        "from": "T21n1402_001:0918b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知此明名號之者。",
        "from": "T21n1402_001:0918b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼所住方無此一切雷電驚怖。",
        "from": "T21n1402_001:0918b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若所住處有如是閃電。",
        "from": "T21n1402_001:0918b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但書此真言安置彼處一切閃電而不能發。",
        "from": "T21n1402_001:0918b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說此捺囉(二合)弭拏真言章句曰。",
        "from": "T21n1402_001:0918c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去引一)儞彌儞泯達[口*(隸木+士)](二)怛哩(二合)路(去引)迦(去引)路(去引)枳儞(三)戌(上)攞播(上引)抳(上)儞(四)囉乞叉(二合)囉乞叉(二合)[牟*含](牟含反稱名五)薩嚩尾儞庾(二合)那婆(二合)曳毘藥(二合六)娑嚩(二合引)賀(引七)爾時聖觀自在菩薩摩訶薩。",
        "from": "T21n1402_001:0918c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與自眾等皆來集會一面而坐。",
        "from": "T21n1402_001:0918c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀自在菩薩即從坐起。",
        "from": "T21n1402_001:0918c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白言世尊我亦說此正法。",
        "from": "T21n1402_001:0918c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捺囉(二合)弭拏真言章句曰。",
        "from": "T21n1402_001:0918c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去引一)尾曩(引)舍鉢囉(二合)底也(二合)哩替(二合)計(二)鉢囉(二合)底也(二合)彌怛[口*(隸木+士)](二合三)秣第穆訖諦(四)尾麼禮(五)鉢囉(二合)婆(去引)娑迦(二合)[口*(隸木+士)](六)頞拏[口*(隸木+士)](七)半拏[口*(隸木+士)](八)悉吠(二合)帝(九)半拏囉嚩(去)枲儞(十)麼(引)帝迦囉(引)攞(十一)劫畢羅氷(上)誐攞(十二)乞史(二合)那地穆乞史(二合十三)囉乞叉(二合)囉乞叉(二合)[牟*含](十四)薩(轉舌)嚩(引)迦(上引)攞蜜[口*栗](二合)底庾(二合)佩(上)曳毘藥(二合十五)麼(引上)銘(十六)跛舍演(二合)覩(十七)薩(轉舌)嚩(引)迦攞蜜[口*栗](二合)底也(二合)嚩(入十八)阿(上)哩野(二合引)嚩路(上引)枳諦濕嚩(二合)囉帝惹(引)娑嚩(二合引)賀(引十九)爾時金剛手祕密主。",
        "from": "T21n1402_001:0918c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛合掌恭敬白世尊言。",
        "from": "T21n1402_001:0918c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦說此正法陀羅尼真言章句曰。",
        "from": "T21n1402_001:0918c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去引一)母儞母儞(二)母儞麼底(三)麼底素麼底(四)麼賀(引)麼底(五)賀(引)賀(引)賀(引)賀(引六)麼(引)帶囉曩(二合引)悉底(二合)播崩(去聲七)嚩日囉(二合)播抳囉舍(上八)儞哩(二合)茶(上)娑嚩(二合引)賀(引九)世尊我此章句名無能勝。",
        "from": "T21n1402_001:0918c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有憶念受持書寫供養者。",
        "from": "T21n1402_001:0918c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我常擁護一切怖畏。",
        "from": "T21n1402_001:0918c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切中夭即得解脫。",
        "from": "T21n1402_001:0918c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時娑訶世界主大梵天王。",
        "from": "T21n1402_001:0919a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白言世尊我亦說此正法陀羅尼真言章句。",
        "from": "T21n1402_001:0919a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益安樂諸有情故。",
        "from": "T21n1402_001:0919a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1402_001:0919a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去引一)醯里蜜里(二)只里娑嚩(二合引)賀(三)沒囉(二合)憾麼(二合)布[口*(隸木+士)](四)麼賀(引)沒囉(二合)憾麼(二合引)抳(五)沒囉(二合)憾麼(二合)孽(轉舌)陛(六)布瑟崩(去二合)僧(去)娑哆(二合)[口*(隸木+士)]娑嚩(二合引)賀(引七)世尊此名梵天難拏陀羅尼。",
        "from": "T21n1402_001:0919a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能救護於一切中夭。",
        "from": "T21n1402_001:0919a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得長壽。",
        "from": "T21n1402_001:0919a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪業皆悉消滅。",
        "from": "T21n1402_001:0919a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主向世尊所。",
        "from": "T21n1402_001:0919a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白世尊言。",
        "from": "T21n1402_001:0919a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦說此正法陀羅尼真言章句曰。",
        "from": "T21n1402_001:0919a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去引一)沒馱麼蹬(上)膩(二)麼儞儞(三)矯(魚夭反)哩巘(引)馱哩(四)贊拏(上引)里麼(引)蹬(去)儗(五)卜迦枲(六)娑(引)攞沒囉(二合)帝(七)呬(上)曩麼第(引八)跢(引)囉抳(九)麼姤(引)里儞計(十)作訖囉(二合)嚩(引)枳(十一)舍嚩哩捨(引上)嚩哩娑嚩(二合引)賀(引十二)世尊我此明句名金剛坐。",
        "from": "T21n1402_001:0919a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切驚怖及諸中夭。",
        "from": "T21n1402_001:0919a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無障礙悉得解脫。",
        "from": "T21n1402_001:0919a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時持國天王增長天王廣目天王多聞天王。",
        "from": "T21n1402_001:0919a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛白言世尊。",
        "from": "T21n1402_001:0919a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等亦說此正法陀羅尼章句曰。",
        "from": "T21n1402_001:0919a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引去一)補瑟閉(二合)蘇補瑟閉(二合二)度跛波哩賀(引)[口*(隸木+士)](三)阿(上)哩野(二合)鉢囉(二合)舍悉諦(四)扇(引)帝儞(泥逸反)穆訖帝(二合五)蟒(去)孽禮曳(二合六)醯[口*闌]抳也(二合)孽(轉舌)陛(七)窣覩(二合)膩(上)娑多(二合)尾膩(上)娑嚩(二合引)賀(引八)世尊我等四王如上所說真言章句名無怖畏。",
        "from": "T21n1402_001:0919a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸怖畏而作擁護。",
        "from": "T21n1402_001:0919a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切壽命令無中夭。",
        "from": "T21n1402_001:0919a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時娑誐嚕龍王麼曩悉吠(二合)龍王電光龍王無熱惱池龍王。",
        "from": "T21n1402_001:0919b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "電舌龍王百光龍王等。",
        "from": "T21n1402_001:0919b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦向世尊前合掌恭敬住立一面。",
        "from": "T21n1402_001:0919b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊告言有此如意章句之處。",
        "from": "T21n1402_001:0919b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護一切閃電障難。",
        "from": "T21n1402_001:0919b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能救護一切中夭攝除諸毒。",
        "from": "T21n1402_001:0919b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切羯祛那吠哆拏。",
        "from": "T21n1402_001:0919b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作不吉祥事者亦悉破壞。",
        "from": "T21n1402_001:0919b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽當發慈心。",
        "from": "T21n1402_001:0919b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等龍趣之中。",
        "from": "T21n1402_001:0919b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各生嗔恚我慢貢高當應降伏。",
        "from": "T21n1402_001:0919b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸龍白言云何降伏。",
        "from": "T21n1402_001:0919b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊答言我有陀羅尼。",
        "from": "T21n1402_001:0919b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令汝等龍我慢貢高心便止息。",
        "from": "T21n1402_001:0919b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1402_001:0919b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引去一)阿(上)惹[口*(隸木+士)](二)麼麼[口*(隸木+士)](三)阿蜜[口*栗](二合)帝(四)阿乞叉(二合引)曳(五)阿尾也(二合)曳(六)奔抳也(二合)跛哩也(二合引)曳(七)薩嚩播跛(八)鉢囉(二合)舍麼儞娑嚩(二合引)賀(引九)阿(引上)哩野半(引)拏(十)燥播(引)枳(上)曳娑嚩(二合引)賀(引十一)印捺囉(二合)設寧(上)曳娑嚩(二合引)賀(引十二)銘(上)伽(上)設寧(上)娑嚩(二合引)賀(引十三)世尊告言。",
        "from": "T21n1402_001:0919b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有男子女人。",
        "from": "T21n1402_001:0919b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此真言章句。",
        "from": "T21n1402_001:0919b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦書寫供養者。",
        "from": "T21n1402_001:0919b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸龍神閃電等怖不能為害。",
        "from": "T21n1402_001:0919b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無根毒及和合毒。",
        "from": "T21n1402_001:0919b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸所作毒悉不能害我等及一切眾生故。",
        "from": "T21n1402_001:0919b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大梵天王及天帝釋。",
        "from": "T21n1402_001:0919b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護世四王諸龍王等。",
        "from": "T21n1402_001:0919b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉善哉賢者。",
        "from": "T21n1402_001:0919b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益安樂多數諸群生故。",
        "from": "T21n1402_001:0919b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善說此正法捺囉(二合)彌拏真言章句。",
        "from": "T21n1402_001:0919b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等一心受持。",
        "from": "T21n1402_001:0919b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經時。",
        "from": "T21n1402_001:0919b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間天人阿蘇[口*洛]犍闥婆等及諸大眾。",
        "from": "T21n1402_001:0919b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行。",
        "from": "T21n1402_001:0919b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消除一切閃電隨求如意陀羅尼經",
        "from": "T21n1402_001:0919b28_0",
        "context_with_next_sentence": false
    }
]