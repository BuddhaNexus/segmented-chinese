[
    {
        "source_sentence": "答順宗心要法門",
        "from": "X58n1005_001:0426a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐清涼國師　澄觀　撰",
        "from": "X58n1005_001:0426a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圭峰沙門　宗密　注",
        "from": "X58n1005_001:0426a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至道本乎其心(諸佛眾生迷悟本也)心法本乎無住。",
        "from": "X58n1005_001:0426a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(萬法之宗。",
        "from": "X58n1005_001:0426a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本乎無住。",
        "from": "X58n1005_001:0426a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即心體也。",
        "from": "X58n1005_001:0426a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名經云。",
        "from": "X58n1005_001:0426a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依無住本。",
        "from": "X58n1005_001:0426a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立一切法)無住心體。",
        "from": "X58n1005_001:0426a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈知不昧(瑩淨之理)。",
        "from": "X58n1005_001:0426a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性相寂默。",
        "from": "X58n1005_001:0426a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(性即空空絕跡。",
        "from": "X58n1005_001:0426a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相即星象粲然)包含德用(性包含於神用。",
        "from": "X58n1005_001:0426a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具塵沙之無邊)。",
        "from": "X58n1005_001:0426a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "該攝內外。",
        "from": "X58n1005_001:0426a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(相該攝於內外。",
        "from": "X58n1005_001:0426a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不在於中間)能廣(無外也)能深(無內也)。",
        "from": "X58n1005_001:0426a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有非空。",
        "from": "X58n1005_001:0426a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(妙有不空。",
        "from": "X58n1005_001:0426a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真空不有)不生不滅(非四相所遷也)。",
        "from": "X58n1005_001:0426a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求之不得。",
        "from": "X58n1005_001:0426a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄之不離(明一真心地。",
        "from": "X58n1005_001:0426a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕取捨之情)。",
        "from": "X58n1005_001:0426a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷現量則惑苦紛然。",
        "from": "X58n1005_001:0426a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(迷本逐末)悟真性則空明廓徹(返本還源)。",
        "from": "X58n1005_001:0426a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖即心即佛。",
        "from": "X58n1005_001:0426a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯證者方知。",
        "from": "X58n1005_001:0426a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(凡聖一真。",
        "from": "X58n1005_001:0426a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶來見隔。",
        "from": "X58n1005_001:0426a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見在即凡。",
        "from": "X58n1005_001:0426a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情忘即佛。",
        "from": "X58n1005_001:0426a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智與理冥。",
        "from": "X58n1005_001:0426a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境與神會者。",
        "from": "X58n1005_001:0426a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方知也)。",
        "from": "X58n1005_001:0426a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然有證有知。",
        "from": "X58n1005_001:0426a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則慧日沈沒於有地(若存證知。",
        "from": "X58n1005_001:0426a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則棄內而外求。",
        "from": "X58n1005_001:0426a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即滯於有)。",
        "from": "X58n1005_001:0426a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無照無悟。",
        "from": "X58n1005_001:0426a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則昏雲掩蔽於空門(若忘智忘照。",
        "from": "X58n1005_001:0426a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則外忘緣而內忘照。",
        "from": "X58n1005_001:0426a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即滯於無)。",
        "from": "X58n1005_001:0426a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但一念不生。",
        "from": "X58n1005_001:0426a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後際斷。",
        "from": "X58n1005_001:0426a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(妄心不生。",
        "from": "X58n1005_001:0426a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二際俱斷)照體獨立。",
        "from": "X58n1005_001:0426a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物我皆如(真智現前。",
        "from": "X58n1005_001:0426a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及我所。",
        "from": "X58n1005_001:0426a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆同體)。",
        "from": "X58n1005_001:0426a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直造心源。",
        "from": "X58n1005_001:0426a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智無得。",
        "from": "X58n1005_001:0426a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(至理虗玄。",
        "from": "X58n1005_001:0426a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言忘慮絕。",
        "from": "X58n1005_001:0426a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以識識。",
        "from": "X58n1005_001:0426a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以行得)不取不捨。",
        "from": "X58n1005_001:0426a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(性自天真。",
        "from": "X58n1005_001:0426b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無取捨)無對無修。",
        "from": "X58n1005_001:0426b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(本非對待。",
        "from": "X58n1005_001:0426b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有修作)。",
        "from": "X58n1005_001:0426b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然迷悟更依。",
        "from": "X58n1005_001:0426b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真妄相待(迷即六凡。",
        "from": "X58n1005_001:0426b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟則四聖。",
        "from": "X58n1005_001:0426b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真智生。",
        "from": "X58n1005_001:0426b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄念滅。",
        "from": "X58n1005_001:0426b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄若起。",
        "from": "X58n1005_001:0426b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真智隱)。",
        "from": "X58n1005_001:0426b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求真去妄。",
        "from": "X58n1005_001:0426b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如避影以勞形(若有取捨。",
        "from": "X58n1005_001:0426b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勞形役智)。",
        "from": "X58n1005_001:0426b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若體妄即真。",
        "from": "X58n1005_001:0426b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似處陰而影滅(妄無自性。",
        "from": "X58n1005_001:0426b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉體即真)。",
        "from": "X58n1005_001:0426b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無心忘照。",
        "from": "X58n1005_001:0426b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則萬累都捐(既忘心照。",
        "from": "X58n1005_001:0426b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱自空)。",
        "from": "X58n1005_001:0426b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若任運寂知。",
        "from": "X58n1005_001:0426b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則眾行圓起(起即體之用。",
        "from": "X58n1005_001:0426b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用而無用。",
        "from": "X58n1005_001:0426b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何假因耶)。",
        "from": "X58n1005_001:0426b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放曠任其去住。",
        "from": "X58n1005_001:0426b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(不著彼此)靜鑑見其源流(動靜不失理也)。",
        "from": "X58n1005_001:0426b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語默不失玄微。",
        "from": "X58n1005_001:0426b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(語默全真)動靜豈離法界(去住合道)。",
        "from": "X58n1005_001:0426b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言止則雙忘智寂。",
        "from": "X58n1005_001:0426b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(止觀俱泯)論觀則雙照寂知(止觀齊彰)。",
        "from": "X58n1005_001:0426b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語證不可示人。",
        "from": "X58n1005_001:0426b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(寂然之理。",
        "from": "X58n1005_001:0426b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可說示)說理非證不了(唯證相應)。",
        "from": "X58n1005_001:0426b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟寂無寂。",
        "from": "X58n1005_001:0426b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(智與理冥)真智無知。",
        "from": "X58n1005_001:0426b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(真如之理。",
        "from": "X58n1005_001:0426b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泯能知智)以知寂不二之一心。",
        "from": "X58n1005_001:0426b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(以即理之智也)契空有雙融之中道。",
        "from": "X58n1005_001:0426b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(證不二之理也)無住無著。",
        "from": "X58n1005_001:0426b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(二邊不立。",
        "from": "X58n1005_001:0426b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中道不安)莫攝莫收。",
        "from": "X58n1005_001:0426b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(任法界性。",
        "from": "X58n1005_001:0426b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延促無礙)是非兩忘。",
        "from": "X58n1005_001:0426b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能所雙絕。",
        "from": "X58n1005_001:0426b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯絕亦絕。",
        "from": "X58n1005_001:0426b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若現前(法界真性。",
        "from": "X58n1005_001:0426b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思慮叵窮。",
        "from": "X58n1005_001:0426b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若絕能所。",
        "from": "X58n1005_001:0426b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則真智現前也)。",
        "from": "X58n1005_001:0426b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若非心外新生。",
        "from": "X58n1005_001:0426b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(不從外得)智性乃本來具足(非新新有)。",
        "from": "X58n1005_001:0426b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然本寂不能自見。",
        "from": "X58n1005_001:0426b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實由般若之功(理非智不能顯)。",
        "from": "X58n1005_001:0426b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若之與智性。",
        "from": "X58n1005_001:0426b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻覆相成(智非理不能生)。",
        "from": "X58n1005_001:0426b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本智之與始終。",
        "from": "X58n1005_001:0426b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩體雙絕(本末俱泯)。",
        "from": "X58n1005_001:0426b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證入則妙覺圓明。",
        "from": "X58n1005_001:0426b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(體無瑕翳)悟本則因果交徹(凡聖相入)。",
        "from": "X58n1005_001:0426b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心作佛。",
        "from": "X58n1005_001:0426b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一心而非佛心。",
        "from": "X58n1005_001:0426b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(念念全真)處處證真。",
        "from": "X58n1005_001:0426b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一塵而非佛國(即染而淨)。",
        "from": "X58n1005_001:0426b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真妄物我。",
        "from": "X58n1005_001:0426b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉一全收。",
        "from": "X58n1005_001:0426b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(二而不二)心佛眾生。",
        "from": "X58n1005_001:0426b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "炳然齊致(不二而二)。",
        "from": "X58n1005_001:0426b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷則人隨於法。",
        "from": "X58n1005_001:0426b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法法萬差而人不同(迷真逐妄)。",
        "from": "X58n1005_001:0426b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟則法隨於人。",
        "from": "X58n1005_001:0426b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人人一致而融萬境(物象無體)。",
        "from": "X58n1005_001:0426b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言窮慮絕。",
        "from": "X58n1005_001:0426c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何果何因。",
        "from": "X58n1005_001:0426c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(本離言念)體本寂寥。",
        "from": "X58n1005_001:0426c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰同孰異(非同異境)。",
        "from": "X58n1005_001:0426c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯志懷虗朗。",
        "from": "X58n1005_001:0426c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消息沖融(佩道之士。",
        "from": "X58n1005_001:0426c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契之即神)。",
        "from": "X58n1005_001:0426c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其猶透水月華。",
        "from": "X58n1005_001:0426c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗而可見。",
        "from": "X58n1005_001:0426c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(喻也)無心鏡像。",
        "from": "X58n1005_001:0426c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照而常空矣(虛心之鑑)。",
        "from": "X58n1005_001:0426c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心要法門頌",
        "from": "X58n1005_001:0426c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲達心源淨(所迷之理)　　須知我相空(萬物自虗)　形容何處實(緣生本無)　　念慮本無從(起處不真)　豁爾靈明現(似日初出)　　翛然世界通(即無障礙)　真金開伏藏(情忘理現)　　赫日出瞑矇(智起惑忘)　試將心比佛(性無異故)　　與佛始終同(真妄無別)答順宗心要法門(終)",
        "from": "X58n1005_001:0426c06_0",
        "context_with_next_sentence": false
    }
