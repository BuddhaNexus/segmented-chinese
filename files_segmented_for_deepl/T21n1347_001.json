[
    {
        "source_sentence": "息除中夭陀羅尼經",
        "from": "T21n1347_001:0860a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天北印度烏填曩國帝釋",
        "from": "T21n1347_001:0860a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宮寺三藏傳法大師賜紫沙門",
        "from": "T21n1347_001:0860a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣施護奉　詔譯",
        "from": "T21n1347_001:0860a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1347_001:0860a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在殑伽河邊。",
        "from": "T21n1347_001:0860a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大眾俱及於護世四大天王多聞天王最為上首。",
        "from": "T21n1347_001:0860a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告四王言。",
        "from": "T21n1347_001:0860a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大怖畏深可厭患。",
        "from": "T21n1347_001:0860a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等應知若男若女童男童女若人若天。",
        "from": "T21n1347_001:0860a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀中夭生大怖畏。",
        "from": "T21n1347_001:0860a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒時擾惱各不相救。",
        "from": "T21n1347_001:0860a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至老死甚大怖畏。",
        "from": "T21n1347_001:0860a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無窮盡。",
        "from": "T21n1347_001:0860a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今為汝說救護法。",
        "from": "T21n1347_001:0860a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時會中四大天王。",
        "from": "T21n1347_001:0860a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言世尊。",
        "from": "T21n1347_001:0860a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等今日於世尊前。",
        "from": "T21n1347_001:0860a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此說已踴躍歡喜。",
        "from": "T21n1347_001:0860a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以身命財奉於如來。",
        "from": "T21n1347_001:0860a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願佛哀愍為我演說。",
        "from": "T21n1347_001:0860a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊一彈指間。",
        "from": "T21n1347_001:0860a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面東而住說如是言南無十方。",
        "from": "T21n1347_001:0860a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來無上正等正覺。",
        "from": "T21n1347_001:0860a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大慈悲憐愍有情。",
        "from": "T21n1347_001:0860a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼皆證得阿耨多羅三藐三菩提。",
        "from": "T21n1347_001:0860a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願慈悲同共觀察。",
        "from": "T21n1347_001:0860a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著我有情與力加護。",
        "from": "T21n1347_001:0860a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除中夭敷演解說。",
        "from": "T21n1347_001:0860a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是東西南北乃至上下。",
        "from": "T21n1347_001:0860a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來唱如是言。",
        "from": "T21n1347_001:0860a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無一切如來無上正等正覺。",
        "from": "T21n1347_001:0860a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不捨慈悲而為眾生。",
        "from": "T21n1347_001:0860a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得阿耨多羅三藐三菩提。",
        "from": "T21n1347_001:0860a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願慈悲同共觀察著我有情敷演解說。",
        "from": "T21n1347_001:0860a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸佛同共證明。",
        "from": "T21n1347_001:0860a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今宣說救護怖畏息除難法。",
        "from": "T21n1347_001:0860a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃至第二法輪演說之時。",
        "from": "T21n1347_001:0860a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此會眾中皆獲壽命色相具足。",
        "from": "T21n1347_001:0860a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得離於生死怖畏而無中夭。",
        "from": "T21n1347_001:0860a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至老病亦復如是。",
        "from": "T21n1347_001:0860a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時十方一切諸佛。",
        "from": "T21n1347_001:0860b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照見一一世界如來形像。",
        "from": "T21n1347_001:0860b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如胡麻量遍滿一切。",
        "from": "T21n1347_001:0860b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼十方一一如來。",
        "from": "T21n1347_001:0860b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同共發聲乃說呪曰。",
        "from": "T21n1347_001:0860b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去引一)左禮左攞(引)左禮(二)尾[寧*頁]跓(傑固反)娑嚩(二合)悉底(二合)計(三)作訖[口*闌](二合引)囉(引)爾曩(四)鉢囉(二合)捨滿覩(五)薩嚩枲誐(引入六)阿曩矩曩注(准上切七)左[口*(隸木+士)]左[口*(隸木+士)](八)計麼[寧*頁]設焰(二合九)儞麼儞設也(二合十)儞呬麼詩悉(十一)嬌(居夭反引)囉尾曳(二合十二)呬矩囉[口*(隸木+士)](十三)矩麼底(十四)尾灑麼(引)抳麼抳(十五)尸數醯嚩(十六)阿左禮尾左禮(十七)麼(引)尾覽嚩(十八)母護母(轉舌)護(十九)娑嚩(二合引)賀(二十)爾時十方一切如來。",
        "from": "T21n1347_001:0860b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此祕密神呪已作如是言。",
        "from": "T21n1347_001:0860b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來無上正等正覺皆同此說。",
        "from": "T21n1347_001:0860b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時北方多聞天王而白佛言世尊。",
        "from": "T21n1347_001:0860b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今聞彼十方如來威神之力加持擁護。",
        "from": "T21n1347_001:0860b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無中夭息除怖畏。",
        "from": "T21n1347_001:0860b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面於佛前而說呪曰。",
        "from": "T21n1347_001:0860b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合一)他(去引)濕吠(二合去)帝(二)濕吠(二合去)帝(三)里里里里(四)爾時東方持國天王。",
        "from": "T21n1347_001:0860b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於佛前乃說呪曰。",
        "from": "T21n1347_001:0860b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拶哩拶哩娑嚩(二合引)賀(引)",
        "from": "T21n1347_001:0860b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時南方增長天王。",
        "from": "T21n1347_001:0860b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於佛前即說呪曰。",
        "from": "T21n1347_001:0860b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩(去引)梨嚩嚩嚩嚩",
        "from": "T21n1347_001:0860b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時西方廣目天王。",
        "from": "T21n1347_001:0860b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍立佛前亦說呪曰。",
        "from": "T21n1347_001:0860b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麼(去引)鄧擬儞蘇麼(引)蘇母蘇母爾時世尊告四天王言。",
        "from": "T21n1347_001:0860b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此神呪是一切佛證明觀察。",
        "from": "T21n1347_001:0860b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有族姓男女等輩。",
        "from": "T21n1347_001:0860b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜受持志誠憶念。",
        "from": "T21n1347_001:0860b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必獲長命而無中夭。",
        "from": "T21n1347_001:0860b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後不墮惡趣。",
        "from": "T21n1347_001:0860b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人利益有情。",
        "from": "T21n1347_001:0860c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發誠諦心受持讀誦。",
        "from": "T21n1347_001:0860c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時無諸怖畏。",
        "from": "T21n1347_001:0860c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無變怪及諸惡相。",
        "from": "T21n1347_001:0860c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於現在世又無白癩顛狂諸病。",
        "from": "T21n1347_001:0860c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及離水火刀兵疾疫蟲藥等毒。",
        "from": "T21n1347_001:0860c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至雷雹一切諸難皆悉遠離。",
        "from": "T21n1347_001:0860c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是經典所在之處。",
        "from": "T21n1347_001:0860c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛及眾菩薩悉皆來集。",
        "from": "T21n1347_001:0860c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護是經令無障難。",
        "from": "T21n1347_001:0860c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於此經典。",
        "from": "T21n1347_001:0860c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫莊嚴護淨轉讀。",
        "from": "T21n1347_001:0860c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如造佛像種種嚴飾。",
        "from": "T21n1347_001:0860c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲功德而無有異。",
        "from": "T21n1347_001:0860c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人供養諸佛精心離慢。",
        "from": "T21n1347_001:0860c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲吉祥福息除災難。",
        "from": "T21n1347_001:0860c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有受持書寫此經恒離懈怠。",
        "from": "T21n1347_001:0860c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲功德亦復如是。",
        "from": "T21n1347_001:0860c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聖賢常恒擁護離諸災患。",
        "from": "T21n1347_001:0860c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T21n1347_001:0860c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王龍神八部阿蘇囉等。",
        "from": "T21n1347_001:0860c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸人天一切大眾。",
        "from": "T21n1347_001:0860c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞法歡喜信受奉行。",
        "from": "T21n1347_001:0860c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除中夭陀羅尼經",
        "from": "T21n1347_001:0860c14_0",
        "context_with_next_sentence": false
    }
]