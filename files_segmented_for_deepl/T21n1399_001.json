[
    {
        "source_sentence": "佛說滅除五逆罪大陀羅尼經",
        "from": "T21n1399_001:0915c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1399_001:0915c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1399_001:0915c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告阿難言。",
        "from": "T21n1399_001:0915c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大陀羅尼具大威力功德無量。",
        "from": "T21n1399_001:0915c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅眾生五逆重罪。",
        "from": "T21n1399_001:0915c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人聞是陀羅尼。",
        "from": "T21n1399_001:0915c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發至誠心盡此身命。",
        "from": "T21n1399_001:0915c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常能頂戴受持讀誦。",
        "from": "T21n1399_001:0915c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所獲功德。",
        "from": "T21n1399_001:0915c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如持千佛無異。",
        "from": "T21n1399_001:0915c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1399_001:0915c19_8",
        "context_with_next_sentence": true
    },
