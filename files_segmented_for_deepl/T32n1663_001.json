[
    {
        "source_sentence": "菩提心觀釋",
        "from": "T32n1663_001:0562a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T32n1663_001:0562a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教大師臣法天奉　詔譯",
        "from": "T32n1663_001:0562a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸命本師　　大覺世尊　　我今略釋　菩提心觀如佛所說。",
        "from": "T32n1663_001:0562a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從心生一切法。",
        "from": "T32n1663_001:0562a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當議彼菩提心。",
        "from": "T32n1663_001:0562a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何性。",
        "from": "T32n1663_001:0562a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答離一切性。",
        "from": "T32n1663_001:0562a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何一切性。",
        "from": "T32n1663_001:0562a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂蘊處界等性。",
        "from": "T32n1663_001:0562a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼菩提心離取捨故。",
        "from": "T32n1663_001:0562a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則法無我自性平等。",
        "from": "T32n1663_001:0562a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來不生自性空故。",
        "from": "T32n1663_001:0562a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言一切性者。",
        "from": "T32n1663_001:0562a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我等性。",
        "from": "T32n1663_001:0562b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂我人眾生壽者補特伽羅摩拏嚩迦等性。",
        "from": "T32n1663_001:0562b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼等性非菩提心。",
        "from": "T32n1663_001:0562b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何。",
        "from": "T32n1663_001:0562b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂彼我等。",
        "from": "T32n1663_001:0562b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於自性離一切相中而生我見。",
        "from": "T32n1663_001:0562b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從我見生一切煩惱此不生彼心。",
        "from": "T32n1663_001:0562b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或言蘊處界等亦離取捨。",
        "from": "T32n1663_001:0562b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂蘊處界等性真實理不可得故。",
        "from": "T32n1663_001:0562b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何色相等無實。",
        "from": "T32n1663_001:0562b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂色蘊四大合成故。",
        "from": "T32n1663_001:0562b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大者。",
        "from": "T32n1663_001:0562b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即地水火風界。",
        "from": "T32n1663_001:0562b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復生五色謂色聲香味觸。",
        "from": "T32n1663_001:0562b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼地大等及五色等。",
        "from": "T32n1663_001:0562b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一各自性不可得。",
        "from": "T32n1663_001:0562b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸法皆然。",
        "from": "T32n1663_001:0562b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故知色名虛假。",
        "from": "T32n1663_001:0562b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此知色蘊空。",
        "from": "T32n1663_001:0562b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如因樹有影樹滅影亡。",
        "from": "T32n1663_001:0562b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色蘊如是。",
        "from": "T32n1663_001:0562b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受蘊亦然。",
        "from": "T32n1663_001:0562b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名受。",
        "from": "T32n1663_001:0562b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受有三種。",
        "from": "T32n1663_001:0562b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂苦受樂受非苦樂受。",
        "from": "T32n1663_001:0562b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此三受互相因緣。",
        "from": "T32n1663_001:0562b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有二種。",
        "from": "T32n1663_001:0562b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂身受意受。",
        "from": "T32n1663_001:0562b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色蘊攝。",
        "from": "T32n1663_001:0562b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身不可得故。",
        "from": "T32n1663_001:0562b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無身即無受。",
        "from": "T32n1663_001:0562b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不可言亦不可說非短非長。",
        "from": "T32n1663_001:0562b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色非相。",
        "from": "T32n1663_001:0562b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無實無著。",
        "from": "T32n1663_001:0562b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可知故。",
        "from": "T32n1663_001:0562b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身受如是。",
        "from": "T32n1663_001:0562b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意受亦然。",
        "from": "T32n1663_001:0562b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受蘊如是。",
        "from": "T32n1663_001:0562b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見受蘊空。",
        "from": "T32n1663_001:0562b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想蘊亦虛假不實。",
        "from": "T32n1663_001:0562b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣慮所攝。",
        "from": "T32n1663_001:0562b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼緣慮不可得故。",
        "from": "T32n1663_001:0562b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即非緣慮。",
        "from": "T32n1663_001:0562b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非緣慮故見想蘊空想蘊如是。",
        "from": "T32n1663_001:0562b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行蘊亦然。",
        "from": "T32n1663_001:0562b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心所造作善意記念等行。",
        "from": "T32n1663_001:0562b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所有故。",
        "from": "T32n1663_001:0562b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼心法所生色等蘊一一無所生。",
        "from": "T32n1663_001:0562b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故知行蘊業相不實亦無主宰。",
        "from": "T32n1663_001:0562b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見行蘊空行蘊如是。",
        "from": "T32n1663_001:0562b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識蘊亦然。",
        "from": "T32n1663_001:0562b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至眼耳鼻舌身意。",
        "from": "T32n1663_001:0562b22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼眼識等一一自性皆不可得。",
        "from": "T32n1663_001:0562b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼眼緣有色。",
        "from": "T32n1663_001:0562b23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從緣生識。",
        "from": "T32n1663_001:0562b23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣即不生識。",
        "from": "T32n1663_001:0562b23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此眼色及彼色蘊等無分齊。",
        "from": "T32n1663_001:0562b24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此分別眼色即非眼色。",
        "from": "T32n1663_001:0562b24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識無所生。",
        "from": "T32n1663_001:0562b25_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識如是。",
        "from": "T32n1663_001:0562b25_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳鼻舌身意亦然。",
        "from": "T32n1663_001:0562b25_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是知此識依止摩曩識。",
        "from": "T32n1663_001:0562b26_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由依止摩曩識故。",
        "from": "T32n1663_001:0562b26_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即發生過去未來見在法故。",
        "from": "T32n1663_001:0562b27_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何過去未來見在法。",
        "from": "T32n1663_001:0562b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂過去已滅。",
        "from": "T32n1663_001:0562b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來未生。",
        "from": "T32n1663_001:0562b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見在不住。",
        "from": "T32n1663_001:0562b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是知識蘊空。",
        "from": "T32n1663_001:0562b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一一說蘊處界。",
        "from": "T32n1663_001:0562b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各分別自性皆空。",
        "from": "T32n1663_001:0562c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼非無性即真實句。",
        "from": "T32n1663_001:0562c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻無種子不生芽莖。",
        "from": "T32n1663_001:0562c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說彼蘊處界等亦離取捨。",
        "from": "T32n1663_001:0562c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩提心無取無捨。",
        "from": "T32n1663_001:0562c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說。",
        "from": "T32n1663_001:0562c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告祕密主彼菩提心。",
        "from": "T32n1663_001:0562c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來應正等覺了知彼心。",
        "from": "T32n1663_001:0562c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非青非黃。",
        "from": "T32n1663_001:0562c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非赤非白。",
        "from": "T32n1663_001:0562c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非紅色非頗胝迦色。",
        "from": "T32n1663_001:0562c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非短非長。",
        "from": "T32n1663_001:0562c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非圓非方。",
        "from": "T32n1663_001:0562c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非明非暗。",
        "from": "T32n1663_001:0562c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非女非男。",
        "from": "T32n1663_001:0562c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非黃門等。",
        "from": "T32n1663_001:0562c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又祕密主。",
        "from": "T32n1663_001:0562c07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心非欲界性。",
        "from": "T32n1663_001:0562c07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色界性。",
        "from": "T32n1663_001:0562c08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非天性非夜叉。",
        "from": "T32n1663_001:0562c08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非乾闥婆非阿修羅。",
        "from": "T32n1663_001:0562c08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非人非非人等性。",
        "from": "T32n1663_001:0562c09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切智求亦不可得。",
        "from": "T32n1663_001:0562c09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是取心非有。",
        "from": "T32n1663_001:0562c10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何言有捨故。",
        "from": "T32n1663_001:0562c10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如佛說。",
        "from": "T32n1663_001:0562c10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告祕密主。",
        "from": "T32n1663_001:0562c11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心非內非外非中間。",
        "from": "T32n1663_001:0562c11_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得故。",
        "from": "T32n1663_001:0562c11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何。",
        "from": "T32n1663_001:0562c12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自性寂靜故。",
        "from": "T32n1663_001:0562c12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又祕密主。",
        "from": "T32n1663_001:0562c12_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼菩提心一切智求不可得。",
        "from": "T32n1663_001:0562c13_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得取捨。",
        "from": "T32n1663_001:0562c13_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是於法得離取捨。",
        "from": "T32n1663_001:0562c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等無我。",
        "from": "T32n1663_001:0562c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如一切法無我亦然。",
        "from": "T32n1663_001:0562c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說。",
        "from": "T32n1663_001:0562c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心亦然。",
        "from": "T32n1663_001:0562c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法空無相無我。",
        "from": "T32n1663_001:0562c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法寂靜無寂靜相。",
        "from": "T32n1663_001:0562c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心本平等本來不生亦非不生。",
        "from": "T32n1663_001:0562c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復云何性。",
        "from": "T32n1663_001:0562c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰空性。",
        "from": "T32n1663_001:0562c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空云何性。",
        "from": "T32n1663_001:0562c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂如虛空故。",
        "from": "T32n1663_001:0562c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說。",
        "from": "T32n1663_001:0562c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空之性空無喻故。",
        "from": "T32n1663_001:0562c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提之心亦復如是。",
        "from": "T32n1663_001:0562c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提之名非性非相。",
        "from": "T32n1663_001:0562c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生無滅。",
        "from": "T32n1663_001:0562c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非覺非無覺。",
        "from": "T32n1663_001:0562c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是了知。",
        "from": "T32n1663_001:0562c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名菩提心。",
        "from": "T32n1663_001:0562c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如佛說。",
        "from": "T32n1663_001:0562c21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告祕密主。",
        "from": "T32n1663_001:0562c21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自本心如實了知。",
        "from": "T32n1663_001:0562c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無有法亦不可得。",
        "from": "T32n1663_001:0562c22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故名阿耨多羅三藐三菩提。",
        "from": "T32n1663_001:0562c22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又告祕密主。",
        "from": "T32n1663_001:0562c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於自心如實觀已。",
        "from": "T32n1663_001:0562c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後發起方便觀於眾生。",
        "from": "T32n1663_001:0562c24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知諸眾生於自覺性不如實知。",
        "from": "T32n1663_001:0562c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起於疑妄顛倒執著。",
        "from": "T32n1663_001:0562c25_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受於種種輪迴大苦。",
        "from": "T32n1663_001:0562c26_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我由此故起大悲心。",
        "from": "T32n1663_001:0562c26_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生於自心法如實證覺。",
        "from": "T32n1663_001:0562c27_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即名為菩提心。",
        "from": "T32n1663_001:0562c27_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名利益心。",
        "from": "T32n1663_001:0562c28_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂心。",
        "from": "T32n1663_001:0562c28_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上心。",
        "from": "T32n1663_001:0562c28_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界善覺心。",
        "from": "T32n1663_001:0562c28_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如是智。",
        "from": "T32n1663_001:0562c29_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝諸眾生故。",
        "from": "T32n1663_001:0562c29_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名菩提心。",
        "from": "T32n1663_001:0562c29_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發此心故。",
        "from": "T32n1663_001:0562c29_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲福德亦如虛空無有邊際。",
        "from": "T32n1663_001:0563a01_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其功德海亦復無量。",
        "from": "T32n1663_001:0563a01_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復劫盡功德無盡。",
        "from": "T32n1663_001:0563a02_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名為發一切智根本最上菩提心。",
        "from": "T32n1663_001:0563a02_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心觀釋一卷",
        "from": "T32n1663_001:0563a04_0",
        "context_with_next_sentence": false
    }
]