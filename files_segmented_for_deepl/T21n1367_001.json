[
    {
        "source_sentence": "佛說大普賢陀羅尼經",
        "from": "T21n1367_001:0884c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附梁錄",
        "from": "T21n1367_001:0884c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1367_001:0884c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T21n1367_001:0884c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時佛告阿難。",
        "from": "T21n1367_001:0884c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今說大普賢呪。",
        "from": "T21n1367_001:0884c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當受持。",
        "from": "T21n1367_001:0884c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多擲多　阿咤　那咤　茶彌茶　遮居梨　居梨茶也　居梨茶也拔坻　思提　思陀　婆夢坻阿難此大普賢呪。",
        "from": "T21n1367_001:0884c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮滅一切兵刃。",
        "from": "T21n1367_001:0884c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切怨仇。",
        "from": "T21n1367_001:0885a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切夜叉羅剎復多等畏。",
        "from": "T21n1367_001:0885a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切不得食下鬼名。",
        "from": "T21n1367_001:0885a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡摩兜(一)烏奢睺睺胡摩兜(二)阿[少/兔]羯卑胡摩兜(三)破波羅胡摩兜(四)莎呵(五)。",
        "from": "T21n1367_001:0885a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪水七遍與病人飲之。",
        "from": "T21n1367_001:0885a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腰脚痛鬼名",
        "from": "T21n1367_001:0885a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼盧兜(一)波吒羅呼盧兜(二)毘魔羅呼盧兜(三)彌梨耆梨卑呼盧兜(四)莎呵(五)。",
        "from": "T21n1367_001:0885a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪三色縷青黃綠。",
        "from": "T21n1367_001:0885a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結作七結。",
        "from": "T21n1367_001:0885a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫脚腕次繫髀後繫腰。",
        "from": "T21n1367_001:0885a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭痛鬼名",
        "from": "T21n1367_001:0885a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡摩兜摩呵迦吒羅(一)毘摩迦吒羅(二)呼呼羅迦吒羅(三)伊呼迦吒羅(四)伊未迦知迦吒羅(五)莎呵(六)。",
        "from": "T21n1367_001:0885a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七遍呪楊枝打二七下。",
        "from": "T21n1367_001:0885a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闇鈍鬼名",
        "from": "T21n1367_001:0885a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哹吒吒(一)浮律置浮吒吒(二)阿支拏呼吒吒(三)浮律置支呼吒吒(四)伊呼破羅支呼吒吒(五)私蜜兜伊呼支破羅(六)莎呵(七)。",
        "from": "T21n1367_001:0885a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三七遍呪七日日三遍。",
        "from": "T21n1367_001:0885a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳痛鬼名",
        "from": "T21n1367_001:0885a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比膩波(一)阿制置毘膩波(二)呼膩置毘膩波(三)伊呼支膩置膩波(四)耆摩膩毘膩波(五)莎呵(六)。",
        "from": "T21n1367_001:0885a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月生一日。",
        "from": "T21n1367_001:0885a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使左耳痛南向坐。",
        "from": "T21n1367_001:0885a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右耳痛北向坐。",
        "from": "T21n1367_001:0885a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東向門病人門內坐呪師門外坐。",
        "from": "T21n1367_001:0885a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水亦門外二七遍三[口*孫]之。",
        "from": "T21n1367_001:0885a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淋鬼名",
        "from": "T21n1367_001:0885a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破波羅(一)浮梨浮梨置破波羅(二)車慕那破波羅(三)呼呼羅車波羅(四)。",
        "from": "T21n1367_001:0885a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熱病鬼神病。",
        "from": "T21n1367_001:0885b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方道蠱毒呪術。",
        "from": "T21n1367_001:0885b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘多茶富多那等。",
        "from": "T21n1367_001:0885b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子善女人所至之處。",
        "from": "T21n1367_001:0885b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行道中若水道中若急難處應念此呪。",
        "from": "T21n1367_001:0885b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有夜叉復多毘舍遮拘槃茶迦吒富多那羅剎毘多茶等畏。",
        "from": "T21n1367_001:0885b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又無水火刀杖兵凶毒藥衰害呪術方道一切諸惡人非人等如是諸畏。",
        "from": "T21n1367_001:0885b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難若有恐怖急難。",
        "from": "T21n1367_001:0885b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應誦念此呪。",
        "from": "T21n1367_001:0885b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能作衰惱者。",
        "from": "T21n1367_001:0885b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難若有受持讀誦此呪。",
        "from": "T21n1367_001:0885b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上天龍鬼神二十八部人非人等。",
        "from": "T21n1367_001:0885b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能越犯此呪。",
        "from": "T21n1367_001:0885b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵輪金剛輪當為作苦患。",
        "from": "T21n1367_001:0885b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令頭破作七分。",
        "from": "T21n1367_001:0885b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方四維上下若。",
        "from": "T21n1367_001:0885b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有於此人起惡心者。",
        "from": "T21n1367_001:0885b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆繫其毒心令不發起。",
        "from": "T21n1367_001:0885b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子善女人。",
        "from": "T21n1367_001:0885b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應善讀誦執持奉行。",
        "from": "T21n1367_001:0885b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大普賢陀羅尼經",
        "from": "T21n1367_001:0885b15_0",
        "context_with_next_sentence": false
    }
]