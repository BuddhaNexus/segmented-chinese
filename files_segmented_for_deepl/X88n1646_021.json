[
    {
        "source_sentence": "居士傳二十一",
        "from": "X88n1646_021:0219a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晁王文富張趙傳",
        "from": "X88n1646_021:0219a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晁明遠名迥。",
        "from": "X88n1646_021:0219a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世為清豐人。",
        "from": "X88n1646_021:0219a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父儉。",
        "from": "X88n1646_021:0219a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徙家彭門。",
        "from": "X88n1646_021:0219a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明遠幼能文。",
        "from": "X88n1646_021:0219a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太平興國五年登進士第。",
        "from": "X88n1646_021:0219a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至道末官翰林學士。",
        "from": "X88n1646_021:0219a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性樂易淳固。",
        "from": "X88n1646_021:0219a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服道甚篤。",
        "from": "X88n1646_021:0219a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷官臨事未甞挾情害人。",
        "from": "X88n1646_021:0219a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真宗數稱為長者。",
        "from": "X88n1646_021:0219a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初受學於劉海蟾。",
        "from": "X88n1646_021:0219a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得煉形服氣之術。",
        "from": "X88n1646_021:0219a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後學釋氏。",
        "from": "X88n1646_021:0219a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以止觀為宗。",
        "from": "X88n1646_021:0219a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在禁苑中與同僚偶坐。",
        "from": "X88n1646_021:0219a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有汲水者趨而過。",
        "from": "X88n1646_021:0219a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語同僚曰。",
        "from": "X88n1646_021:0219a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀空純熟。",
        "from": "X88n1646_021:0219a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目無全人。",
        "from": "X88n1646_021:0219a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所著書有道院別集。",
        "from": "X88n1646_021:0219a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多發明空理。",
        "from": "X88n1646_021:0219a21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一云。",
        "from": "X88n1646_021:0219a21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人生世間。",
        "from": "X88n1646_021:0219a21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夢無數。",
        "from": "X88n1646_021:0219a21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無數之夢。",
        "from": "X88n1646_021:0219a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一稱我。",
        "from": "X88n1646_021:0219a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一之我。",
        "from": "X88n1646_021:0219a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非空乎。",
        "from": "X88n1646_021:0219a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫之中。",
        "from": "X88n1646_021:0219a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身無數。",
        "from": "X88n1646_021:0219a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無數之身。",
        "from": "X88n1646_021:0219a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一稱我。",
        "from": "X88n1646_021:0219a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一之我。",
        "from": "X88n1646_021:0219a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又非空乎。",
        "from": "X88n1646_021:0219a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢既是空。",
        "from": "X88n1646_021:0219a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身亦如夢。",
        "from": "X88n1646_021:0219a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以迷著。",
        "from": "X88n1646_021:0219a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念爭空。",
        "from": "X88n1646_021:0219a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "X88n1646_021:0219a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人生有身。",
        "from": "X88n1646_021:0219a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而後有名。",
        "from": "X88n1646_021:0219b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人人各以身名自執。",
        "from": "X88n1646_021:0219b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我己之身名。",
        "from": "X88n1646_021:0219b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無始來。",
        "from": "X88n1646_021:0219b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生化出沒亦已無數。",
        "from": "X88n1646_021:0219b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知定以何時何處之身執為我耶。",
        "from": "X88n1646_021:0219b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定以何時何處之名垂之不朽耶。",
        "from": "X88n1646_021:0219b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜思好身後名者不亦悠悠哉。",
        "from": "X88n1646_021:0219b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作七審。",
        "from": "X88n1646_021:0219b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一切妄念能息否。",
        "from": "X88n1646_021:0219b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二一切外緣稍簡省否。",
        "from": "X88n1646_021:0219b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三一切觸境能不動否。",
        "from": "X88n1646_021:0219b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四一切語言能慎密否。",
        "from": "X88n1646_021:0219b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五一切黑白滅分別否。",
        "from": "X88n1646_021:0219b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六夢想之間不顛倒否。",
        "from": "X88n1646_021:0219b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七方寸之中得恬愉否。",
        "from": "X88n1646_021:0219b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書之座右。",
        "from": "X88n1646_021:0219b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終身自考以驗道力。",
        "from": "X88n1646_021:0219b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁宗即位。",
        "from": "X88n1646_021:0219b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以太子少保致仕。",
        "from": "X88n1646_021:0219b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居昭德坊。",
        "from": "X88n1646_021:0219b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "里名其堂曰凝寂。",
        "from": "X88n1646_021:0219b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時習安坐。",
        "from": "X88n1646_021:0219b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鞭心入理。",
        "from": "X88n1646_021:0219b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝課心經。",
        "from": "X88n1646_021:0219b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜則數息。",
        "from": "X88n1646_021:0219b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒家人無輙有請。",
        "from": "X88n1646_021:0219b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夫人密覘之。",
        "from": "X88n1646_021:0219b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見其瞑目端坐。",
        "from": "X88n1646_021:0219b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬚髮搖風。",
        "from": "X88n1646_021:0219b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凝然如木偶。",
        "from": "X88n1646_021:0219b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕夢遊西北方國。",
        "from": "X88n1646_021:0219b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大山洞中。",
        "from": "X88n1646_021:0219b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群僧列而誦經。",
        "from": "X88n1646_021:0219b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明遠合掌禮之。",
        "from": "X88n1646_021:0219b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顧見一道士向明遠作禮。",
        "from": "X88n1646_021:0219b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趨而避之。",
        "from": "X88n1646_021:0219b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居一月卒。",
        "from": "X88n1646_021:0219b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年八十四。",
        "from": "X88n1646_021:0219b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡文元。",
        "from": "X88n1646_021:0219b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後李昌齡紀明遠事。",
        "from": "X88n1646_021:0219b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂其前生實淨居天主云(東都事略．道院錄．法藏碎金．文元逸事)。",
        "from": "X88n1646_021:0219b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王子正名隨。",
        "from": "X88n1646_021:0219b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河陽人。",
        "from": "X88n1646_021:0219b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "登進士甲科。",
        "from": "X88n1646_021:0219b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷知州郡。",
        "from": "X88n1646_021:0219b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為政外嚴而內寬。",
        "from": "X88n1646_021:0219b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居常慕裴公美之為人。",
        "from": "X88n1646_021:0219b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以御史中丞出鎮錢塘。",
        "from": "X88n1646_021:0219b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往興教寺謁小壽禪師。",
        "from": "X88n1646_021:0219b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機語契合。",
        "from": "X88n1646_021:0219b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自是踐履日深竟明大法。",
        "from": "X88n1646_021:0219b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時長水法師子璿疏首楞嚴經既成。",
        "from": "X88n1646_021:0219b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬子正為之序。",
        "from": "X88n1646_021:0219b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序曰。",
        "from": "X88n1646_021:0219b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大佛頂義密因了義首楞嚴經者。",
        "from": "X88n1646_021:0219b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃竺乾之洪範。",
        "from": "X88n1646_021:0219b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法苑之寶典也。",
        "from": "X88n1646_021:0219b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔能仁以出震五天。",
        "from": "X88n1646_021:0219b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨尊三界。",
        "from": "X88n1646_021:0219b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍金輪而啟物。",
        "from": "X88n1646_021:0219b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現玉毫而應世。",
        "from": "X88n1646_021:0219b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀四生之受苦也惠濟庶物。",
        "from": "X88n1646_021:0219b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍羣機之未悟也力垂善誘。",
        "from": "X88n1646_021:0219b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是俯仰至理述宣微言。",
        "from": "X88n1646_021:0219b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闢大慈之門。",
        "from": "X88n1646_021:0219b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓真如之海。",
        "from": "X88n1646_021:0219b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為一切諸法唯依妄念而起。",
        "from": "X88n1646_021:0219b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生不出因緣而有。",
        "from": "X88n1646_021:0219c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃知生死輪轉貪欲為本。",
        "from": "X88n1646_021:0219c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修證常樂禪慧為宗。",
        "from": "X88n1646_021:0219c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則斯經也可以辨識諸魔。",
        "from": "X88n1646_021:0219c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破滅七趣。",
        "from": "X88n1646_021:0219c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂止及觀。",
        "from": "X88n1646_021:0219c03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修圓覺妙明之心。",
        "from": "X88n1646_021:0219c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發真歸元。",
        "from": "X88n1646_021:0219c04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證上乘至極之道。",
        "from": "X88n1646_021:0219c04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懿夫般剌譯其義。",
        "from": "X88n1646_021:0219c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "房相筆其文。",
        "from": "X88n1646_021:0219c05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今釋璿師學識兼高。",
        "from": "X88n1646_021:0219c05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨才無礙。",
        "from": "X88n1646_021:0219c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是經典為時教於一代。",
        "from": "X88n1646_021:0219c05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分妙理於十門。",
        "from": "X88n1646_021:0219c06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功濟大千。",
        "from": "X88n1646_021:0219c06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道傳不二。",
        "from": "X88n1646_021:0219c06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受則為世津梁。",
        "from": "X88n1646_021:0219c07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開悟則入佛知見。",
        "from": "X88n1646_021:0219c07_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃題經以作疏。",
        "from": "X88n1646_021:0219c07_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因疏以明理。",
        "from": "X88n1646_021:0219c08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故可以開前疑而决後滯。",
        "from": "X88n1646_021:0219c08_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "披迷雲而覩慧日。",
        "from": "X88n1646_021:0219c08_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨志在外護。",
        "from": "X88n1646_021:0219c09_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慙無內學。",
        "from": "X88n1646_021:0219c09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因獲覧閱。",
        "from": "X88n1646_021:0219c09_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輙述序引。",
        "from": "X88n1646_021:0219c09_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依法寶。",
        "from": "X88n1646_021:0219c10_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸精究於真詮。",
        "from": "X88n1646_021:0219c10_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚揚佛乘。",
        "from": "X88n1646_021:0219c10_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願普霑於勝果。",
        "from": "X88n1646_021:0219c10_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞刪次傳燈錄為玉英集。",
        "from": "X88n1646_021:0219c11_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行於世。",
        "from": "X88n1646_021:0219c11_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明道中參知政事。",
        "from": "X88n1646_021:0219c11_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨終書偈曰。",
        "from": "X88n1646_021:0219c12_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畵堂燈不滅。",
        "from": "X88n1646_021:0219c12_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指向誰說。",
        "from": "X88n1646_021:0219c12_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去住本尋常。",
        "from": "X88n1646_021:0219c12_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春風掃殘雪。",
        "from": "X88n1646_021:0219c13_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈中書令。",
        "from": "X88n1646_021:0219c13_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡章惠(東都事略．五燈會元．楞嚴經疏序)。",
        "from": "X88n1646_021:0219c13_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文寬夫名彥博。",
        "from": "X88n1646_021:0219c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汾州介休人也。",
        "from": "X88n1646_021:0219c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷仕仁英神哲四朝。",
        "from": "X88n1646_021:0219c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入將相五十餘年。",
        "from": "X88n1646_021:0219c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官至太師。",
        "from": "X88n1646_021:0219c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞兼譯經潤文使。",
        "from": "X88n1646_021:0219c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "封潞國公。",
        "from": "X88n1646_021:0219c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初鎮北京。",
        "from": "X88n1646_021:0219c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時華嚴洞老來別。",
        "from": "X88n1646_021:0219c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寬夫曰。",
        "from": "X88n1646_021:0219c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法師老矣復何往。",
        "from": "X88n1646_021:0219c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰入滅去。",
        "from": "X88n1646_021:0219c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寬夫以為戲言。",
        "from": "X88n1646_021:0219c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既去。",
        "from": "X88n1646_021:0219c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使人候之。",
        "from": "X88n1646_021:0219c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果入滅矣。",
        "from": "X88n1646_021:0219c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大異之。",
        "from": "X88n1646_021:0219c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及闍維。",
        "from": "X88n1646_021:0219c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親往臨視。",
        "from": "X88n1646_021:0219c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以琉璃瓶置座前祝曰。",
        "from": "X88n1646_021:0219c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法果靈。",
        "from": "X88n1646_021:0219c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願舍利入吾瓶。",
        "from": "X88n1646_021:0219c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄有煙自空而降入瓶中。",
        "from": "X88n1646_021:0219c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傾之獲舍利無算。",
        "from": "X88n1646_021:0219c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃皈信佛法。",
        "from": "X88n1646_021:0219c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚向道益力。",
        "from": "X88n1646_021:0219c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專念阿彌陀佛。",
        "from": "X88n1646_021:0219c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨夕行坐未甞少懈。",
        "from": "X88n1646_021:0219c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願云。",
        "from": "X88n1646_021:0219c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我常精進。",
        "from": "X88n1646_021:0219c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修一切善。",
        "from": "X88n1646_021:0219c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我了心宗。",
        "from": "X88n1646_021:0219c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣度諸含識。",
        "from": "X88n1646_021:0219c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居京師與淨嚴法師集十萬人為淨土會。",
        "from": "X88n1646_021:0219c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年九十二卒。",
        "from": "X88n1646_021:0219c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡忠烈(東都事略．林間錄．佛祖統紀．佛法金湯)。",
        "from": "X88n1646_021:0219c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富彥國名弼。",
        "from": "X88n1646_021:0220a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河南人。",
        "from": "X88n1646_021:0220a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶歷中與文寬夫並相天下。",
        "from": "X88n1646_021:0220a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱為富文。",
        "from": "X88n1646_021:0220a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "封鄭國公。",
        "from": "X88n1646_021:0220a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙閱道甞貽書策之曰。",
        "from": "X88n1646_021:0220a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執事富貴已極。",
        "from": "X88n1646_021:0220a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道德甚盛。",
        "from": "X88n1646_021:0220a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所未甚留意者如來一大事因緣而已。",
        "from": "X88n1646_021:0220a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願益勉之。",
        "from": "X88n1646_021:0220a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彥國以為然。",
        "from": "X88n1646_021:0220a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守亳州日。",
        "from": "X88n1646_021:0220a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞修顒禪師主投子。",
        "from": "X88n1646_021:0220a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂往參謁。",
        "from": "X88n1646_021:0220a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顒見即呼曰。",
        "from": "X88n1646_021:0220a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相公已入來。",
        "from": "X88n1646_021:0220a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富弼猶在外。",
        "from": "X88n1646_021:0220a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彥國汗出浹背有省。",
        "from": "X88n1646_021:0220a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即延至府中居兩月。",
        "from": "X88n1646_021:0220a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日有發明。",
        "from": "X88n1646_021:0220a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後呈顒書曰。",
        "from": "X88n1646_021:0220a08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弼遭遇和尚。",
        "from": "X88n1646_021:0220a08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無始以來忘失事一旦認得。",
        "from": "X88n1646_021:0220a08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此後定須拔出生死海。",
        "from": "X88n1646_021:0220a09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是尋常恩知。",
        "from": "X88n1646_021:0220a09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖盡力道斷道不出也。",
        "from": "X88n1646_021:0220a09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年八十餘卒。",
        "from": "X88n1646_021:0220a10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元祐初加太師。",
        "from": "X88n1646_021:0220a10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡文忠(東都事略．五燈會元．湘湖野錄)。",
        "from": "X88n1646_021:0220a10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張安道名方平。",
        "from": "X88n1646_021:0220a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋城人。",
        "from": "X88n1646_021:0220a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累官太子太師。",
        "from": "X88n1646_021:0220a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[改己+易]歷中外。",
        "from": "X88n1646_021:0220a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "望重一世。",
        "from": "X88n1646_021:0220a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶歷中為滁州守。",
        "from": "X88n1646_021:0220a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊瑯琊山。",
        "from": "X88n1646_021:0220a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抵藏院。",
        "from": "X88n1646_021:0220a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶見楞伽經。",
        "from": "X88n1646_021:0220a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取視之。",
        "from": "X88n1646_021:0220a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恍然如獲舊物。",
        "from": "X88n1646_021:0220a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀至世間離生滅。",
        "from": "X88n1646_021:0220a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如虗空華。",
        "from": "X88n1646_021:0220a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿障氷釋。",
        "from": "X88n1646_021:0220a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂明心要。",
        "from": "X88n1646_021:0220a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈曰。",
        "from": "X88n1646_021:0220a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念在生滅。",
        "from": "X88n1646_021:0220a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千機縛有無。",
        "from": "X88n1646_021:0220a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神鋒輕舉處。",
        "from": "X88n1646_021:0220a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "透出走盤珠。",
        "from": "X88n1646_021:0220a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暮年以此經授蘇子瞻。",
        "from": "X88n1646_021:0220a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輔以錢三十萬使印施江淮間。",
        "from": "X88n1646_021:0220a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王介甫問安道曰。",
        "from": "X88n1646_021:0220a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔孟去世後千餘年。",
        "from": "X88n1646_021:0220a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕無人焉。",
        "from": "X88n1646_021:0220a18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何也。",
        "from": "X88n1646_021:0220a18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安道曰。",
        "from": "X88n1646_021:0220a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈為無人。",
        "from": "X88n1646_021:0220a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有過之者。",
        "from": "X88n1646_021:0220a19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "介甫曰何人。",
        "from": "X88n1646_021:0220a19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安道曰。",
        "from": "X88n1646_021:0220a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬祖一。",
        "from": "X88n1646_021:0220a19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汾陽無業。",
        "from": "X88n1646_021:0220a19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪峯存。",
        "from": "X88n1646_021:0220a20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巖頭奯。",
        "from": "X88n1646_021:0220a20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丹霞然。",
        "from": "X88n1646_021:0220a20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲門偃。",
        "from": "X88n1646_021:0220a20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "介甫未喻。",
        "from": "X88n1646_021:0220a20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安道曰。",
        "from": "X88n1646_021:0220a20_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儒門淡泊。",
        "from": "X88n1646_021:0220a21_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收拾不住。",
        "from": "X88n1646_021:0220a21_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆歸釋氏耳。",
        "from": "X88n1646_021:0220a21_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "介甫歎服。",
        "from": "X88n1646_021:0220a21_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後以語張天覺。",
        "from": "X88n1646_021:0220a21_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天覺撫几曰。",
        "from": "X88n1646_021:0220a22_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至哉此論也。",
        "from": "X88n1646_021:0220a22_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒諡文定(東坡文集．佛祖統紀)。",
        "from": "X88n1646_021:0220a22_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙閱道名忭。",
        "from": "X88n1646_021:0220a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衢州西安人。",
        "from": "X88n1646_021:0220a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氣宇清逸。",
        "from": "X88n1646_021:0220a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜慍不形於色。",
        "from": "X88n1646_021:0220a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁宗朝官御史。",
        "from": "X88n1646_021:0220b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勁直敢言。",
        "from": "X88n1646_021:0220b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神宗朝擢參知政事。",
        "from": "X88n1646_021:0220b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屢陳新法之害。",
        "from": "X88n1646_021:0220b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷知諸州。",
        "from": "X88n1646_021:0220b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民懷其惠。",
        "from": "X88n1646_021:0220b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱道年四十餘。",
        "from": "X88n1646_021:0220b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屏去聲色。",
        "from": "X88n1646_021:0220b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居常蔬食。",
        "from": "X88n1646_021:0220b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究心宗教。",
        "from": "X88n1646_021:0220b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初在衢與慧來禪師遊。",
        "from": "X88n1646_021:0220b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧來不容措一辭。",
        "from": "X88n1646_021:0220b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及在青州時時冥坐。",
        "from": "X88n1646_021:0220b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽聞雷震。",
        "from": "X88n1646_021:0220b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悟作偈曰。",
        "from": "X88n1646_021:0220b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默坐公堂虗隱几。",
        "from": "X88n1646_021:0220b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心源不動湛如水。",
        "from": "X88n1646_021:0220b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一聲霹靂頂門開。",
        "from": "X88n1646_021:0220b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喚起從前自家的。",
        "from": "X88n1646_021:0220b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧來聞而笑曰。",
        "from": "X88n1646_021:0220b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙閱道撞彩耳。",
        "from": "X88n1646_021:0220b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元豐初以太子太保致仕。",
        "from": "X88n1646_021:0220b07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作高齋居之。",
        "from": "X88n1646_021:0220b07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪誦精嚴。",
        "from": "X88n1646_021:0220b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日延一僧與之對飯。",
        "from": "X88n1646_021:0220b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞作偈曰。",
        "from": "X88n1646_021:0220b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腰佩黃金已退藏。",
        "from": "X88n1646_021:0220b08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "箇中消息也尋常。",
        "from": "X88n1646_021:0220b09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人要識高齋老。",
        "from": "X88n1646_021:0220b09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只是柯村趙四郎。",
        "from": "X88n1646_021:0220b09_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "注云。",
        "from": "X88n1646_021:0220b10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切忌錯認。",
        "from": "X88n1646_021:0220b10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日所為事。",
        "from": "X88n1646_021:0220b10_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜必露香以告於天。",
        "from": "X88n1646_021:0220b10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七年卒。",
        "from": "X88n1646_021:0220b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年七十七。",
        "from": "X88n1646_021:0220b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先期徧辭親友。",
        "from": "X88n1646_021:0220b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其子屼。",
        "from": "X88n1646_021:0220b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見其形色異常。",
        "from": "X88n1646_021:0220b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問後事。",
        "from": "X88n1646_021:0220b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱道厲聲叱之。",
        "from": "X88n1646_021:0220b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺慧來書曰。",
        "from": "X88n1646_021:0220b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非師平日警誨。",
        "from": "X88n1646_021:0220b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此必不得力矣。",
        "from": "X88n1646_021:0220b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少頃趺坐而化(東都事略．五燈會元．趙清獻集)。",
        "from": "X88n1646_021:0220b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_021:0220b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明遠之學於天台三觀之旨。",
        "from": "X88n1646_021:0220b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知所致力矣。",
        "from": "X88n1646_021:0220b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子正與楊大年並號參禪有得。",
        "from": "X88n1646_021:0220b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀其去來之際。",
        "from": "X88n1646_021:0220b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非其驗耶。",
        "from": "X88n1646_021:0220b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文富張趙平生勳德具載於史。",
        "from": "X88n1646_021:0220b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予獨序其學道之始卒。",
        "from": "X88n1646_021:0220b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以著其所存者如此。",
        "from": "X88n1646_021:0220b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_021:0220b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以文富勳名若未了此一著。",
        "from": "X88n1646_021:0220b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦祇是一",
        "from": "X88n1646_021:0220b19_2",
        "context_with_next_sentence": false
    }
]