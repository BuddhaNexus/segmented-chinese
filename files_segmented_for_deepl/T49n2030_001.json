[
    {
        "source_sentence": "大阿羅漢難提蜜多羅所說法住",
        "from": "T49n2030_001:0012c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記",
        "from": "T49n2030_001:0012c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐三藏法師玄奘奉詔譯",
        "from": "T49n2030_001:0012c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是傳聞。",
        "from": "T49n2030_001:0012c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛薄伽梵般涅槃後八百年中。",
        "from": "T49n2030_001:0012c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執師子國勝軍王都。",
        "from": "T49n2030_001:0012c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有阿羅漢名難提蜜多羅(唐言慶友)。",
        "from": "T49n2030_001:0012c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具八解脫三明六通無諍願智邊際定等。",
        "from": "T49n2030_001:0012c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量功德皆悉具足。",
        "from": "T49n2030_001:0012c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大威神名稱高遠。",
        "from": "T49n2030_001:0012c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以願智力能知此界一切有情種種心行。",
        "from": "T49n2030_001:0012c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能隨順作諸饒益。",
        "from": "T49n2030_001:0012c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化緣既畢將般涅槃。",
        "from": "T49n2030_001:0012c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集諸苾芻苾芻尼等。",
        "from": "T49n2030_001:0012c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說己所證諸妙功德。",
        "from": "T49n2030_001:0012c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及應所行利樂有情。",
        "from": "T49n2030_001:0012c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸勝事業皆悉成辦。",
        "from": "T49n2030_001:0012c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告時眾曰。",
        "from": "T49n2030_001:0012c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今已後無復所為。",
        "from": "T49n2030_001:0012c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯無餘依是所歸趣。",
        "from": "T49n2030_001:0012c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁等當知有疑可問。",
        "from": "T49n2030_001:0012c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸大眾聞是語已。",
        "from": "T49n2030_001:0012c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉聲號哭不能自持宛轉於地。",
        "from": "T49n2030_001:0012c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或起唱言佛薄伽梵久已涅槃。",
        "from": "T49n2030_001:0012c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸聖弟子亦隨寂滅。",
        "from": "T49n2030_001:0012c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間久空無真調御。",
        "from": "T49n2030_001:0012c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今唯尊者為天人眼。",
        "from": "T49n2030_001:0012c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何復欲棄捨我等。",
        "from": "T49n2030_001:0012c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂哀愍少留壽命。",
        "from": "T49n2030_001:0012c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者慶友慰喻眾言。",
        "from": "T49n2030_001:0012c24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須啼泣。",
        "from": "T49n2030_001:0012c25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁等當知世間法爾有生必滅。",
        "from": "T49n2030_001:0012c25_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來降伏四魔於壽自在。",
        "from": "T49n2030_001:0012c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順世故猶示涅槃。",
        "from": "T49n2030_001:0012c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況我今者豈宜恒住。",
        "from": "T49n2030_001:0012c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設隨汝請亦無利益。",
        "from": "T49n2030_001:0012c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當體此意勿生憂惱。",
        "from": "T49n2030_001:0012c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有疑者應可速問。",
        "from": "T49n2030_001:0012c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苾芻等雖承告示。",
        "from": "T49n2030_001:0012c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶增涕噎良久乃問。",
        "from": "T49n2030_001:0012c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等未知世尊釋迦牟尼無上正法當住幾時。",
        "from": "T49n2030_001:0013a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者告曰。",
        "from": "T49n2030_001:0013a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽。",
        "from": "T49n2030_001:0013a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來先已說法住經。",
        "from": "T49n2030_001:0013a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當為汝粗更宣說。",
        "from": "T49n2030_001:0013a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛薄伽梵般涅槃時。",
        "from": "T49n2030_001:0013a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無上法付囑十六大阿羅漢并眷屬等。",
        "from": "T49n2030_001:0013a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其護持使不滅沒。",
        "from": "T49n2030_001:0013a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及勅其身與諸施主作真福田。",
        "from": "T49n2030_001:0013a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼施者得大果報。",
        "from": "T49n2030_001:0013a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸大眾聞是語已少解憂悲。",
        "from": "T49n2030_001:0013a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復重請言。",
        "from": "T49n2030_001:0013a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說十六大阿羅漢。",
        "from": "T49n2030_001:0013a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我輩不知其名何等。",
        "from": "T49n2030_001:0013a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶友答言。",
        "from": "T49n2030_001:0013a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一尊者名賓度羅跋囉惰闍。",
        "from": "T49n2030_001:0013a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二尊者名迦諾迦伐蹉。",
        "from": "T49n2030_001:0013a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三尊者名迦諾迦跋釐墮闍。",
        "from": "T49n2030_001:0013a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四尊者名蘇頻陀。",
        "from": "T49n2030_001:0013a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五尊者名諾距羅。",
        "from": "T49n2030_001:0013a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六尊者名跋陀羅。",
        "from": "T49n2030_001:0013a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七尊者名迦理迦。",
        "from": "T49n2030_001:0013a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八尊者名伐闍羅弗多羅。",
        "from": "T49n2030_001:0013a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九尊者名戍博迦。",
        "from": "T49n2030_001:0013a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十尊者名半託迦。",
        "from": "T49n2030_001:0013a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十一尊者名囉怙羅。",
        "from": "T49n2030_001:0013a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十二尊者名那伽犀那。",
        "from": "T49n2030_001:0013a14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十三尊者名因揭陀。",
        "from": "T49n2030_001:0013a15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十四尊者名伐那婆斯。",
        "from": "T49n2030_001:0013a15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十五尊者名阿氏多。",
        "from": "T49n2030_001:0013a16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十六尊者名注荼半託迦。",
        "from": "T49n2030_001:0013a16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是十六大阿羅漢。",
        "from": "T49n2030_001:0013a17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆具三明六通八解脫等無量功德。",
        "from": "T49n2030_001:0013a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離三界染誦持三藏博通外典。",
        "from": "T49n2030_001:0013a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承佛勅故。",
        "from": "T49n2030_001:0013a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力延自壽量。",
        "from": "T49n2030_001:0013a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至世尊正法應住常隨護持。",
        "from": "T49n2030_001:0013a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與施主作真福田。",
        "from": "T49n2030_001:0013a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼施者得大果報。",
        "from": "T49n2030_001:0013a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時苾芻苾芻尼等。",
        "from": "T49n2030_001:0013a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復重請言。",
        "from": "T49n2030_001:0013a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等不知十六尊者多住何處。",
        "from": "T49n2030_001:0013a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持正法饒益有情。",
        "from": "T49n2030_001:0013a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶友答言。",
        "from": "T49n2030_001:0013a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一尊者與自眷屬千阿羅漢。",
        "from": "T49n2030_001:0013a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在西瞿陀尼洲。",
        "from": "T49n2030_001:0013a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二尊者與自眷屬五百阿羅漢。",
        "from": "T49n2030_001:0013a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住北方迦濕彌羅國。",
        "from": "T49n2030_001:0013a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三尊者與自眷屬六百阿羅漢。",
        "from": "T49n2030_001:0013a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在東勝身洲。",
        "from": "T49n2030_001:0013a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四尊者與自眷屬七百阿羅漢。",
        "from": "T49n2030_001:0013a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在北俱盧洲。",
        "from": "T49n2030_001:0013a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五尊者與自眷屬八百阿羅漢。",
        "from": "T49n2030_001:0013b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在南贍部洲。",
        "from": "T49n2030_001:0013b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六尊者與自眷屬九百阿羅漢。",
        "from": "T49n2030_001:0013b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在耽沒羅洲。",
        "from": "T49n2030_001:0013b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七尊者與自眷屬千阿羅漢。",
        "from": "T49n2030_001:0013b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在僧伽荼洲。",
        "from": "T49n2030_001:0013b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八尊者與自眷屬千一百阿羅漢。",
        "from": "T49n2030_001:0013b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在鉢刺拏洲。",
        "from": "T49n2030_001:0013b05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九尊者與自眷屬九百阿羅漢。",
        "from": "T49n2030_001:0013b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在香醉山中。",
        "from": "T49n2030_001:0013b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十尊者與自眷屬千三百阿羅漢。",
        "from": "T49n2030_001:0013b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在三十三天。",
        "from": "T49n2030_001:0013b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十一尊者與自眷屬千一百阿羅漢。",
        "from": "T49n2030_001:0013b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在畢利颺瞿洲。",
        "from": "T49n2030_001:0013b09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十二尊者與自眷屬千二百阿羅漢。",
        "from": "T49n2030_001:0013b10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在半度波山。",
        "from": "T49n2030_001:0013b10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十三尊者與自眷屬千三百阿羅漢。",
        "from": "T49n2030_001:0013b11_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在廣脇山中。",
        "from": "T49n2030_001:0013b12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十四尊者與自眷屬千四百阿羅漢。",
        "from": "T49n2030_001:0013b12_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在可住山中。",
        "from": "T49n2030_001:0013b13_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十五尊者與自眷屬千五百阿羅漢。",
        "from": "T49n2030_001:0013b14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在鷲峯山中。",
        "from": "T49n2030_001:0013b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十六尊者與自眷屬千六百阿羅漢。",
        "from": "T49n2030_001:0013b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多分住在持軸山中。",
        "from": "T49n2030_001:0013b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸仁者若此世界。",
        "from": "T49n2030_001:0013b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切國王輔相大臣長者居士。",
        "from": "T49n2030_001:0013b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男若女發殷淨心。",
        "from": "T49n2030_001:0013b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為四方僧設大施會。",
        "from": "T49n2030_001:0013b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或設五年無遮施會。",
        "from": "T49n2030_001:0013b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或慶寺慶像慶經幡等施設大會。",
        "from": "T49n2030_001:0013b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或延請僧至所住處設大福會。",
        "from": "T49n2030_001:0013b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或詣寺中經行處等。",
        "from": "T49n2030_001:0013b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安布上妙諸坐臥具。",
        "from": "T49n2030_001:0013b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣藥飲食奉施僧眾。",
        "from": "T49n2030_001:0013b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時此十六大阿羅漢。",
        "from": "T49n2030_001:0013b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸眷屬隨其所應分散往赴。",
        "from": "T49n2030_001:0013b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現種種形蔽隱聖儀。",
        "from": "T49n2030_001:0013b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同常凡眾密受供具。",
        "from": "T49n2030_001:0013b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸施主得勝果報。",
        "from": "T49n2030_001:0013b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是十六大阿羅漢。",
        "from": "T49n2030_001:0013b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持正法饒益有情。",
        "from": "T49n2030_001:0013b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此南贍部洲人壽極短至於十歲。",
        "from": "T49n2030_001:0013b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀兵劫起互相誅戮。",
        "from": "T49n2030_001:0013b26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法爾時當暫滅沒。",
        "from": "T49n2030_001:0013b27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀兵劫後人壽漸增至百歲位。",
        "from": "T49n2030_001:0013b27_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此洲人等厭前刀兵殘害苦惱復樂修善。",
        "from": "T49n2030_001:0013b28_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時此十六大阿羅漢。",
        "from": "T49n2030_001:0013b29_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眷屬復來人中。",
        "from": "T49n2030_001:0013b29_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱揚顯說無上正法。",
        "from": "T49n2030_001:0013c01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度無量眾令其出家。",
        "from": "T49n2030_001:0013c01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸有情作饒益事。",
        "from": "T49n2030_001:0013c02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃至此洲人壽六萬歲時。",
        "from": "T49n2030_001:0013c02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上正法流行世間熾然無息。",
        "from": "T49n2030_001:0013c03_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後至人壽七萬歲時。",
        "from": "T49n2030_001:0013c03_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上正法方永滅沒。",
        "from": "T49n2030_001:0013c04_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時此十六大阿羅漢。",
        "from": "T49n2030_001:0013c04_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眷屬於此洲地俱來集會。",
        "from": "T49n2030_001:0013c05_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力用諸七寶造窣堵波嚴麗高廣。",
        "from": "T49n2030_001:0013c06_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼如來應正等覺。",
        "from": "T49n2030_001:0013c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有遺身馱都皆集其內。",
        "from": "T49n2030_001:0013c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時十六大阿羅漢。",
        "from": "T49n2030_001:0013c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眷屬繞窣堵波以諸香花持用供養恭敬讚歎。",
        "from": "T49n2030_001:0013c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繞百千匝瞻仰禮已。",
        "from": "T49n2030_001:0013c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱昇虛空向窣堵波作如是言。",
        "from": "T49n2030_001:0013c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮世尊釋迦如來應正等覺。",
        "from": "T49n2030_001:0013c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我受教勅護持正法。",
        "from": "T49n2030_001:0013c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與天人作諸饒益。",
        "from": "T49n2030_001:0013c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法藏已沒有緣已周今辭滅度。",
        "from": "T49n2030_001:0013c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語已一時俱入無餘涅槃。",
        "from": "T49n2030_001:0013c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先定願力火起焚身。",
        "from": "T49n2030_001:0013c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如燈焰滅骸骨無遺。",
        "from": "T49n2030_001:0013c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時窣堵波便陷入地。",
        "from": "T49n2030_001:0013c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至金輪際方乃停住。",
        "from": "T49n2030_001:0013c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊釋迦牟尼無上正法。",
        "from": "T49n2030_001:0013c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此三千大千世界永滅不現。",
        "from": "T49n2030_001:0013c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此無聞此佛土中有七萬俱胝獨覺一時出現。",
        "from": "T49n2030_001:0013c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至人壽量八萬歲時。",
        "from": "T49n2030_001:0013c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨覺聖眾復皆滅度。",
        "from": "T49n2030_001:0013c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次後彌勒如來應正等覺出現世間時贍部洲廣博嚴淨無諸荊棘谿谷堆埠。",
        "from": "T49n2030_001:0013c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平正潤澤金沙覆地。",
        "from": "T49n2030_001:0013c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處皆有清池茂林名花瑞草及眾寶聚。",
        "from": "T49n2030_001:0013c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更相輝映甚可愛樂。",
        "from": "T49n2030_001:0013c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人皆慈心修行十善。",
        "from": "T49n2030_001:0013c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以修善故壽命長遠豐樂安隱。",
        "from": "T49n2030_001:0013c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士女殷稠城邑隣次鷄飛相及。",
        "from": "T49n2030_001:0013c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所營農稼一種七穫。",
        "from": "T49n2030_001:0013c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然成實不須耘耨。",
        "from": "T49n2030_001:0013c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸仁者於彼時中。",
        "from": "T49n2030_001:0013c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國界莊嚴有情果報陳之難盡。",
        "from": "T49n2030_001:0013c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具如彌勒成佛經說。",
        "from": "T49n2030_001:0013c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒如來成正覺已。",
        "from": "T49n2030_001:0013c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為聲聞眾三會說法令出生死得證涅槃。",
        "from": "T49n2030_001:0013c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一會度九十六俱胝聲聞眾。",
        "from": "T49n2030_001:0013c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二會度九十四俱胝聲聞眾。",
        "from": "T49n2030_001:0013c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三會度九十二俱胝聲聞眾。",
        "from": "T49n2030_001:0014a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸國王大臣長者居士男女一切施主。",
        "from": "T49n2030_001:0014a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於今釋迦牟尼佛正法中。",
        "from": "T49n2030_001:0014a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為佛事自種善根。",
        "from": "T49n2030_001:0014a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或教他種謂以七寶金銀真珠璧玉香材鍮石銅鐵木石泥漆。",
        "from": "T49n2030_001:0014a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以繒縷或以綵畫。",
        "from": "T49n2030_001:0014a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作佛形像及窣堵波。",
        "from": "T49n2030_001:0014a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若大若小乃至最小如指節量。",
        "from": "T49n2030_001:0014a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以香花諸妙供具。",
        "from": "T49n2030_001:0014a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若多若少而為供養。",
        "from": "T49n2030_001:0014a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼由如是善根力故。",
        "from": "T49n2030_001:0014a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至彌勒如來成正覺時善得人身。",
        "from": "T49n2030_001:0014a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼佛第一會中以淨信心捨俗出家剃除鬚髮披著法服既預聖眾。",
        "from": "T49n2030_001:0014a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨宿願力便得涅槃。",
        "from": "T49n2030_001:0014a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名第一為佛事故種善根者所得果報。",
        "from": "T49n2030_001:0014a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸國王及以臣庶一切施主。",
        "from": "T49n2030_001:0014a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於今釋迦牟尼佛正法中。",
        "from": "T49n2030_001:0014a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為法事自種善根。",
        "from": "T49n2030_001:0014a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或教他種。",
        "from": "T49n2030_001:0014a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於大乘素呾纜藏。",
        "from": "T49n2030_001:0014a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有甚深空性相應諸大乘經。",
        "from": "T49n2030_001:0014a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂般若波羅蜜多經。",
        "from": "T49n2030_001:0014a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法芬陀利迦經。",
        "from": "T49n2030_001:0014a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金光明經。",
        "from": "T49n2030_001:0014a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手藏經。",
        "from": "T49n2030_001:0014a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首楞伽摩三摩地經。",
        "from": "T49n2030_001:0014a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻喻三摩地經。",
        "from": "T49n2030_001:0014a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大神變三摩地經。",
        "from": "T49n2030_001:0014a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集諸功德三摩地經。",
        "from": "T49n2030_001:0014a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還如來智印三摩地經。",
        "from": "T49n2030_001:0014a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具諸威光三摩地經。",
        "from": "T49n2030_001:0014a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶臺經集諸菩薩三摩地經。",
        "from": "T49n2030_001:0014a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛攝受經。",
        "from": "T49n2030_001:0014a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集請問經。",
        "from": "T49n2030_001:0014a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵王問經善吉問經。",
        "from": "T49n2030_001:0014a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛問經。",
        "from": "T49n2030_001:0014a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿問經。",
        "from": "T49n2030_001:0014a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海龍王問經。",
        "from": "T49n2030_001:0014a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無熱惱龍王問經。",
        "from": "T49n2030_001:0014a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹幢龍王問經。",
        "from": "T49n2030_001:0014a22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶掌問經。",
        "from": "T49n2030_001:0014a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶髻問經。",
        "from": "T49n2030_001:0014a22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空音問經。",
        "from": "T49n2030_001:0014a23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空吼問經。",
        "from": "T49n2030_001:0014a23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻網問經。",
        "from": "T49n2030_001:0014a23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶女問經。",
        "from": "T49n2030_001:0014a24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙女問經。",
        "from": "T49n2030_001:0014a24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善臂問經。",
        "from": "T49n2030_001:0014a24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子問經。",
        "from": "T49n2030_001:0014a24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛授問經。",
        "from": "T49n2030_001:0014a25_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金光女問經。",
        "from": "T49n2030_001:0014a25_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說無盡慧經。",
        "from": "T49n2030_001:0014a25_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說無垢稱經。",
        "from": "T49n2030_001:0014a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未生怨王經。",
        "from": "T49n2030_001:0014a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦實經。",
        "from": "T49n2030_001:0014a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那羅延經。",
        "from": "T49n2030_001:0014a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛花嚴經。",
        "from": "T49n2030_001:0014a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華手經。",
        "from": "T49n2030_001:0014a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十佛名經。",
        "from": "T49n2030_001:0014a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量光眾經。",
        "from": "T49n2030_001:0014a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極樂眾經。",
        "from": "T49n2030_001:0014a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集淨華經。",
        "from": "T49n2030_001:0014a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大集經。",
        "from": "T49n2030_001:0014a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入一切道經。",
        "from": "T49n2030_001:0014a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶幢經。",
        "from": "T49n2030_001:0014a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶聚經。",
        "from": "T49n2030_001:0014a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶篋經。",
        "from": "T49n2030_001:0014a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彩畫經。",
        "from": "T49n2030_001:0014a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高頂王經。",
        "from": "T49n2030_001:0014a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等大乘經。",
        "from": "T49n2030_001:0014b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有百俱胝部。",
        "from": "T49n2030_001:0014b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黨差別復有大乘毘柰耶藏。",
        "from": "T49n2030_001:0014b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿毘達磨藏眾多部類。",
        "from": "T49n2030_001:0014b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆是菩薩藏攝。",
        "from": "T49n2030_001:0014b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有聲聞三藏。",
        "from": "T49n2030_001:0014b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂素怛纜藏。",
        "from": "T49n2030_001:0014b03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘柰耶藏。",
        "from": "T49n2030_001:0014b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿毘達磨藏。",
        "from": "T49n2030_001:0014b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "素怛纜藏。",
        "from": "T49n2030_001:0014b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有五阿笈摩。",
        "from": "T49n2030_001:0014b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂長阿笈摩。",
        "from": "T49n2030_001:0014b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中阿笈摩。",
        "from": "T49n2030_001:0014b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增一阿笈摩。",
        "from": "T49n2030_001:0014b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應阿笈摩。",
        "from": "T49n2030_001:0014b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雜類阿笈摩。",
        "from": "T49n2030_001:0014b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘柰耶藏中有苾芻戒經苾芻尼戒經。",
        "from": "T49n2030_001:0014b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別戒本諸蘊差別及增一律。",
        "from": "T49n2030_001:0014b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿毘達磨藏中。",
        "from": "T49n2030_001:0014b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有攝六問相應發趣等。",
        "from": "T49n2030_001:0014b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾多部類。",
        "from": "T49n2030_001:0014b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有本生鬘讚獨覺鬘讚。",
        "from": "T49n2030_001:0014b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如是等正法藏中。",
        "from": "T49n2030_001:0014b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或是佛說或菩薩說或聲聞說或諸仙說。",
        "from": "T49n2030_001:0014b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或諸天說或智者說。",
        "from": "T49n2030_001:0014b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能引義利乃至有能。",
        "from": "T49n2030_001:0014b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四句頌。",
        "from": "T49n2030_001:0014b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自誦若教他誦。",
        "from": "T49n2030_001:0014b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自讀若教他讀。",
        "from": "T49n2030_001:0014b12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自持若教他持。",
        "from": "T49n2030_001:0014b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自解說若教他解說。",
        "from": "T49n2030_001:0014b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於法師恭敬供養。",
        "from": "T49n2030_001:0014b14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於經卷恭敬供養。",
        "from": "T49n2030_001:0014b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂以種種香花幡蓋伎樂燈明而為供養。",
        "from": "T49n2030_001:0014b15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於經卷以諸雜綵囊帊縷帶而嚴飾之。",
        "from": "T49n2030_001:0014b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如是等善根力故。",
        "from": "T49n2030_001:0014b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至彌勒如來成正覺時善現人身。",
        "from": "T49n2030_001:0014b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼佛第二會中。",
        "from": "T49n2030_001:0014b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以淨信心捨離家法。",
        "from": "T49n2030_001:0014b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出趣非家。",
        "from": "T49n2030_001:0014b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨除鬚髮披著法服既預聖眾。",
        "from": "T49n2030_001:0014b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨宿願力便得涅槃。",
        "from": "T49n2030_001:0014b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名第二為法事故種善根者所得果報。",
        "from": "T49n2030_001:0014b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸國王及臣庶等。",
        "from": "T49n2030_001:0014b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切施主於今釋迦牟尼佛正法中。",
        "from": "T49n2030_001:0014b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為僧事自種善根。",
        "from": "T49n2030_001:0014b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或教他種。",
        "from": "T49n2030_001:0014b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂諸苾芻苾芻尼眾。",
        "from": "T49n2030_001:0014b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或次第請或隨緣請。",
        "from": "T49n2030_001:0014b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月一日或月八日或十五日設齋供養。",
        "from": "T49n2030_001:0014b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或往寺中若供養佛。",
        "from": "T49n2030_001:0014b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若供養眾或作給侍。",
        "from": "T49n2030_001:0014b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有供養修靜慮者。",
        "from": "T49n2030_001:0014b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有供養諸說法者。",
        "from": "T49n2030_001:0014b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見有人欲於正法學習流布。",
        "from": "T49n2030_001:0014b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師聽受不作留難。",
        "from": "T49n2030_001:0014b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施其所安無令怯退。",
        "from": "T49n2030_001:0014b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或設五年無遮施會。",
        "from": "T49n2030_001:0014b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或施四方僧。",
        "from": "T49n2030_001:0014b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或施寺舍及坐臥具。",
        "from": "T49n2030_001:0014c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或施鍾磬或施園林。",
        "from": "T49n2030_001:0014c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等類供養僧眾。",
        "from": "T49n2030_001:0014c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼由如是善根力故。",
        "from": "T49n2030_001:0014c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至彌勒如來成正覺時善得人身。",
        "from": "T49n2030_001:0014c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼佛第三會中。",
        "from": "T49n2030_001:0014c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以淨信心捨離家法出趣非家。",
        "from": "T49n2030_001:0014c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨除鬚髮披著法服既預聖眾。",
        "from": "T49n2030_001:0014c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨宿願力便得涅槃。",
        "from": "T49n2030_001:0014c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名第三為僧事故種善根者所得果報。",
        "from": "T49n2030_001:0014c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時慶友大阿羅漢。",
        "from": "T49n2030_001:0014c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸大眾廣說如上事已。",
        "from": "T49n2030_001:0014c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力於大眾前身昇虛空。",
        "from": "T49n2030_001:0014c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高七多羅樹。",
        "from": "T49n2030_001:0014c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現種種不可思議雙神變事。",
        "from": "T49n2030_001:0014c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令所觀眾增進勝道。",
        "from": "T49n2030_001:0014c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼尊者現神變已。",
        "from": "T49n2030_001:0014c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於空中結跏趺坐。",
        "from": "T49n2030_001:0014c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨諸壽行及諸命行。",
        "from": "T49n2030_001:0014c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入無餘依般涅槃界。",
        "from": "T49n2030_001:0014c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先定願力火起焚身。",
        "from": "T49n2030_001:0014c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於虛空中雨身遺骨。",
        "from": "T49n2030_001:0014c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸大眾悲歎希有。",
        "from": "T49n2030_001:0014c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "競收遺骨起窣堵波。",
        "from": "T49n2030_001:0014c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸香花寶幢幡蓋伎樂燈明常為供養。",
        "from": "T49n2030_001:0014c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法住記古昔諸師展轉相承誦持不忘。",
        "from": "T49n2030_001:0014c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切國王大臣長者居士諸施主等。",
        "from": "T49n2030_001:0014c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達因果厭生老病死芭蕉幻焰泡沫之身。",
        "from": "T49n2030_001:0014c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修諸勝業於當來世逢事彌勒。",
        "from": "T49n2030_001:0014c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫煩惱得大涅槃生愛樂故。",
        "from": "T49n2030_001:0014c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛正法護持建立令久不滅。",
        "from": "T49n2030_001:0014c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大阿羅漢難提蜜多羅所說法住記",
        "from": "T49n2030_001:0014c22_0",
        "context_with_next_sentence": false
    }
]