[
    {
        "source_sentence": "如來在金棺囑累清淨莊嚴敬",
        "from": "T85n2877_001:1361b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福經(新西方胡國中來出皇涅槃中)如是我聞。",
        "from": "T85n2877_001:1361b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在拘尸那城娑羅雙樹間。",
        "from": "T85n2877_001:1361b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說涅槃訖竟。",
        "from": "T85n2877_001:1361b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂入金棺。",
        "from": "T85n2877_001:1361b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲焚其身。",
        "from": "T85n2877_001:1361b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏坐金棺楯上。",
        "from": "T85n2877_001:1361b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙目出淚放光動地。",
        "from": "T85n2877_001:1361b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量大菩薩眾天龍八部等悉皆生疑。",
        "from": "T85n2877_001:1361b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時須菩提白佛言。",
        "from": "T85n2877_001:1361b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊今欲普為大眾仰請決疑。",
        "from": "T85n2877_001:1361b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不審聽不。",
        "from": "T85n2877_001:1361b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2877_001:1361b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任汝所請。",
        "from": "T85n2877_001:1361b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提白佛言。",
        "from": "T85n2877_001:1361b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來恒說涅槃常樂永無生死。",
        "from": "T85n2877_001:1361b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何由今坐金棺楯上涕淚交流令眾疑也。",
        "from": "T85n2877_001:1361b12_3",
        "context_with_next_sentence": false
    }
]