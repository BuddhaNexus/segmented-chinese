[
    {
        "source_sentence": "勸發諸王要偈",
        "from": "T32n1673_001:0748a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹菩薩撰",
        "from": "T32n1673_001:0748a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋天竺三藏僧伽跋摩譯",
        "from": "T32n1673_001:0748a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　明勝功德王　　我無餘求想",
        "from": "T32n1673_001:0748a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸佛所說法　　莊嚴要何義",
        "from": "T32n1673_001:0748a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　略撰賢聖頌　　大王所宜聞",
        "from": "T32n1673_001:0748a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如以眾雜木　　造立如來像",
        "from": "T32n1673_001:0748a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智者恭敬禮　　依佛故尊視",
        "from": "T32n1673_001:0748a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我今以非辯　　光宣真實藏",
        "from": "T32n1673_001:0748a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慧者應信樂　　依法聽所述",
        "from": "T32n1673_001:0748a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大王雖數聞　　如來梵音說",
        "from": "T32n1673_001:0748a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　勝悟由多聞　　屢聞則深信",
        "from": "T32n1673_001:0748a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如日照素質　　豈不增其鮮",
        "from": "T32n1673_001:0748a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　三寶施戒天　　最勝說六念",
        "from": "T32n1673_001:0748a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨順諸功德　　如實善觀察",
        "from": "T32n1673_001:0748a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身口意常行　　清淨十業道",
        "from": "T32n1673_001:0748a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遠酒不醉亂　　離邪修正命",
        "from": "T32n1673_001:0748a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　知財五家分　　無常不牢固",
        "from": "T32n1673_001:0748a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惠施諸有德　　貧苦及親屬",
        "from": "T32n1673_001:0748a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所生常隨逐　　布施為最勝",
        "from": "T32n1673_001:0748a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不斷亦不滅　　不離不望果",
        "from": "T32n1673_001:0748a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是諸淨戒　　宜應善受持",
        "from": "T32n1673_001:0748a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是則為良田　　生諸功德故",
        "from": "T32n1673_001:0748b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　施戒忍精進　　禪定無量慧",
        "from": "T32n1673_001:0748b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是諸波羅蜜　　慧者當修習",
        "from": "T32n1673_001:0748b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能度三有海　　逮得牟尼尊",
        "from": "T32n1673_001:0748b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人孝父母　　至心盡供養",
        "from": "T32n1673_001:0748b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是名禮教門　　清淨天勝族",
        "from": "T32n1673_001:0748b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　名聞遠流布　　捨身生天上",
        "from": "T32n1673_001:0748b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　離殺盜婬欺　　飲酒及三枝",
        "from": "T32n1673_001:0748b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　成就八分齊　　隨順諸佛學",
        "from": "T32n1673_001:0748b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　捨身生六天　　所欲悉隨意",
        "from": "T32n1673_001:0748b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慳諂幻偽慢　　懈怠貪恚癡",
        "from": "T32n1673_001:0748b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　族姓好容色　　少壯多聞樂",
        "from": "T32n1673_001:0748b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是諸迷惑　　當視如怨家",
        "from": "T32n1673_001:0748b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若修不放逸　　是則不死路",
        "from": "T32n1673_001:0748b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　放逸為死徑　　世尊之所說",
        "from": "T32n1673_001:0748b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為增善法故　　當修不放逸",
        "from": "T32n1673_001:0748b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人先為惡　　後能不放逸",
        "from": "T32n1673_001:0748b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是則照世間　　雲除月光顯",
        "from": "T32n1673_001:0748b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　忍辱無與等　　不隨瞋恚心",
        "from": "T32n1673_001:0748b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛說能遠離　　是得不還道",
        "from": "T32n1673_001:0748b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　有瞋如畫水　　或如畫土石",
        "from": "T32n1673_001:0748b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若說超煩惱　　初人則為勝",
        "from": "T32n1673_001:0748b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　改惡修慈忍　　第三則為上",
        "from": "T32n1673_001:0748b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　最勝說眾生　　三種善惡語",
        "from": "T32n1673_001:0748b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　初名引人心　　美言如飴蜜",
        "from": "T32n1673_001:0748b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　次名真實語　　猶如妙華敷",
        "from": "T32n1673_001:0748b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後名不誠實　　鄙浮如糞穢",
        "from": "T32n1673_001:0748b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慧者應分別　　捨後修初二",
        "from": "T32n1673_001:0748b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　從明明至終　　從闇闇究竟",
        "from": "T32n1673_001:0748b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　有從闇入明　　或從明入冥",
        "from": "T32n1673_001:0748c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慧者應諦了　　捨三昇初明",
        "from": "T32n1673_001:0748c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　有人生似熟　　或復熟似生",
        "from": "T32n1673_001:0748c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或二俱生熟　　明者諦分別",
        "from": "T32n1673_001:0748c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不視他妻色　　視則母女想",
        "from": "T32n1673_001:0748c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是猶生惑　　當修不淨觀",
        "from": "T32n1673_001:0748c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　心意善馳亂　　當勤善守持",
        "from": "T32n1673_001:0748c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如人護勝聞　　寶藏愛子命",
        "from": "T32n1673_001:0748c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當觀五欲樂　　猶如惡毒蛇",
        "from": "T32n1673_001:0748c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　怨憎及刀火　　方便修厭離",
        "from": "T32n1673_001:0748c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　五欲生非義　　猶如頻婆果",
        "from": "T32n1673_001:0748c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　覆相善欺誑　　縛人住生死",
        "from": "T32n1673_001:0748c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智者當觀察　　棄捨勿染污",
        "from": "T32n1673_001:0748c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸根常輕躁　　馳散六塵境",
        "from": "T32n1673_001:0748c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若能善調伏　　是則大勇健",
        "from": "T32n1673_001:0748c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是身為行廁　　九道常流穢",
        "from": "T32n1673_001:0748c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　穿漏難可滿　　薄皮隱不淨",
        "from": "T32n1673_001:0748c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愚者為所欺　　智士當厭離",
        "from": "T32n1673_001:0748c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如人病疥虫　　向火欲除患",
        "from": "T32n1673_001:0748c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　少樂後苦增　　貪欲亦如是",
        "from": "T32n1673_001:0748c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能善知欲過　　從是離眾苦",
        "from": "T32n1673_001:0748c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲見第一義　　佛說觀緣起",
        "from": "T32n1673_001:0748c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　應當勤修習　　最勝無過是",
        "from": "T32n1673_001:0748c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　族姓身端嚴　　多聞自纓絡",
        "from": "T32n1673_001:0748c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若不修戒慧　　此則非殊勝",
        "from": "T32n1673_001:0748c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能具二功德　　無三猶奇特",
        "from": "T32n1673_001:0748c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　利衰及毀譽　　稱譏與苦樂",
        "from": "T32n1673_001:0748c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　八法不傾動　　是則為聖王",
        "from": "T32n1673_001:0748c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　莫為諸天神　　沙門婆羅門",
        "from": "T32n1673_001:0748c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　宗親及賓客　　害生造惡業",
        "from": "T32n1673_001:0749a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　命終入地獄　　獨受彼不代",
        "from": "T32n1673_001:0749a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人作惡業　　不即受楚毒",
        "from": "T32n1673_001:0749a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　命終受苦報　　後悔將何及",
        "from": "T32n1673_001:0749a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　信戒施多聞　　智慧有慚愧",
        "from": "T32n1673_001:0749a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛說不共財　　餘財一切共",
        "from": "T32n1673_001:0749a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　博弈大聚會　　懶惰習惡友",
        "from": "T32n1673_001:0749a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　飲酒縱昏蕩　　夜遊無羞恥",
        "from": "T32n1673_001:0749a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此六污名稱　　智者應遠離",
        "from": "T32n1673_001:0749a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　知足為大財　　世尊所稱說",
        "from": "T32n1673_001:0749a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若能修知足　　雖貧賤大富",
        "from": "T32n1673_001:0749a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如多頭龍　　多頭則多苦",
        "from": "T32n1673_001:0749a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自性結恨深　　是名怨家婦",
        "from": "T32n1673_001:0749a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　傲慢不承順　　名為輕夫婦",
        "from": "T32n1673_001:0749a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　費用夫主財　　是則名賊婦",
        "from": "T32n1673_001:0749a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慎哉賢丈夫　　宜遠此三婦",
        "from": "T32n1673_001:0749a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨順為姊妹　　愛樂為善友",
        "from": "T32n1673_001:0749a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　安慰則為母　　隨意為婢使",
        "from": "T32n1673_001:0749a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此四賢良妻　　則是夫眷屬",
        "from": "T32n1673_001:0749a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　飲食為湯藥　　無貪恚癡服",
        "from": "T32n1673_001:0749a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　唯為止身苦　　勿為肥放逸",
        "from": "T32n1673_001:0749a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　晝則勤修業　　初後夜亦然",
        "from": "T32n1673_001:0749a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　中夜亦正念　　無令空夢過",
        "from": "T32n1673_001:0749a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慈悲喜捨心　　日夜常修習",
        "from": "T32n1673_001:0749a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　設未出世間　　其福勝梵天",
        "from": "T32n1673_001:0749a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　離欲覺歡喜　　苦樂修四禪",
        "from": "T32n1673_001:0749a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　梵光淨果實　　受此諸天樂",
        "from": "T32n1673_001:0749a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人少行惡　　廣修無量善",
        "from": "T32n1673_001:0749a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如以一把鹽　　投之大恒水",
        "from": "T32n1673_001:0749a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人多行惡　　少修淨功德",
        "from": "T32n1673_001:0749b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如以多惡毒　　置之小器食",
        "from": "T32n1673_001:0749b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　五陰闇冥賊　　劫人善珍寶",
        "from": "T32n1673_001:0749b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　信五根力士　　是能善守護",
        "from": "T32n1673_001:0749b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生老病死苦　　所愛者別離",
        "from": "T32n1673_001:0749b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　淪沒不超度　　斯由自業過",
        "from": "T32n1673_001:0749b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　求生天解脫　　當勤修正見",
        "from": "T32n1673_001:0749b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　邪見雖行善　　一切得苦果",
        "from": "T32n1673_001:0749b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無常苦不淨　　應當善觀察",
        "from": "T32n1673_001:0749b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若不正思惟　　四倒盲慧眼",
        "from": "T32n1673_001:0749b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　端正色非我　　我色亦非主",
        "from": "T32n1673_001:0749b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　四陰亦復然　　唯是空苦聚",
        "from": "T32n1673_001:0749b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非時非無因　　亦非自性有",
        "from": "T32n1673_001:0749b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非自在天生　　無明愛業起",
        "from": "T32n1673_001:0749b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身見戒取疑　　是三障解脫",
        "from": "T32n1673_001:0749b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　聖慧開脫門　　自力不由他",
        "from": "T32n1673_001:0749b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　淨戒學禪定　　精勤修四禪",
        "from": "T32n1673_001:0749b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　增上戒心慧　　常當勤修學",
        "from": "T32n1673_001:0749b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸戒智三昧　　悉入三學中",
        "from": "T32n1673_001:0749b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身念處大力　　佛說一乘道",
        "from": "T32n1673_001:0749b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常當繫心念　　方便善守護",
        "from": "T32n1673_001:0749b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若忘是正念　　則失諸善法",
        "from": "T32n1673_001:0749b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身命極浮脆　　喻風吹水泡",
        "from": "T32n1673_001:0749b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　夢覺難可保　　出息無必旋",
        "from": "T32n1673_001:0749b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　倏忽成微塵　　當知無堅固",
        "from": "T32n1673_001:0749b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大地須彌海　　七日皆燒然",
        "from": "T32n1673_001:0749b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廓然無遺燼　　況復危脆身",
        "from": "T32n1673_001:0749b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無常不可依　　亦非覆護法",
        "from": "T32n1673_001:0749b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是身不可怙　　如何不生厭",
        "from": "T32n1673_001:0749b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如海盲龜　　值遇浮木孔",
        "from": "T32n1673_001:0749c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　畜生復人身　　難得復過是",
        "from": "T32n1673_001:0749c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如何人道中　　不修勝果業",
        "from": "T32n1673_001:0749c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寶器盛糞穢　　是則愚癡人",
        "from": "T32n1673_001:0749c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　已得人身寶　　而用造惡行",
        "from": "T32n1673_001:0749c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當知此士夫　　極愚復過是",
        "from": "T32n1673_001:0749c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得生有道國　　遭遇善知識",
        "from": "T32n1673_001:0749c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　正見心成就　　宿命有功德",
        "from": "T32n1673_001:0749c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　四寶輪具足　　能出生死路",
        "from": "T32n1673_001:0749c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　親近善知識　　具足修梵行",
        "from": "T32n1673_001:0749c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛說如是人　　心常得寂滅",
        "from": "T32n1673_001:0749c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　邪見三惡趣　　不聞佛法音",
        "from": "T32n1673_001:0749c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　邊地闇冥處　　聾瘂長壽天",
        "from": "T32n1673_001:0749c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　王已離八難　　得此無礙身",
        "from": "T32n1673_001:0749c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　宜應修善業　　方便求泥洹",
        "from": "T32n1673_001:0749c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生死長夜中　　無量種種苦",
        "from": "T32n1673_001:0749c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　展轉作六親　　尊卑無常序",
        "from": "T32n1673_001:0749c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　永劫生死中　　未曾不為子",
        "from": "T32n1673_001:0749c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　計飲慈母乳　　量喻四大海",
        "from": "T32n1673_001:0749c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　凡夫方受生　　所飲復過是",
        "from": "T32n1673_001:0749c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一人從本來　　積骨高須彌",
        "from": "T32n1673_001:0749c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所經諸人天　　大地微塵數",
        "from": "T32n1673_001:0749c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　先作轉輪王　　後復為僕使",
        "from": "T32n1673_001:0749c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或上為帝釋　　諸天所奉事",
        "from": "T32n1673_001:0749c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　下生糞土中　　往反亦無數",
        "from": "T32n1673_001:0749c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或時生天上　　婇女極娛樂",
        "from": "T32n1673_001:0749c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　目眩眾妙色　　耳聞萬種聲",
        "from": "T32n1673_001:0749c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　觸身皆細軟　　快樂難可名",
        "from": "T32n1673_001:0749c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後墮地獄中　　苦毒靡不經",
        "from": "T32n1673_001:0749c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若生劍林樹　　身首隨刃零",
        "from": "T32n1673_001:0750a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或遊須彌頂　　昇降隨所念",
        "from": "T32n1673_001:0750a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　與眾天女俱　　沐浴曼陀池",
        "from": "T32n1673_001:0750a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寶華列莊嚴　　清涼極快樂",
        "from": "T32n1673_001:0750a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　復入沸灰河　　烹煮悉糜爛",
        "from": "T32n1673_001:0750a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　六天五欲歡　　梵世離欲樂",
        "from": "T32n1673_001:0750a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　死入無擇獄　　備受眾苦毒",
        "from": "T32n1673_001:0750a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或作日月天　　光明照四域",
        "from": "T32n1673_001:0750a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後生黑闇獄　　不自見其形",
        "from": "T32n1673_001:0750a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　王當然慧燈　　勿復隨長冥",
        "from": "T32n1673_001:0750a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　八大地獄中　　燒炙屠裂苦",
        "from": "T32n1673_001:0750a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　備經眾楚毒　　無量不可譬",
        "from": "T32n1673_001:0750a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人隨癡惑　　具造眾惡業",
        "from": "T32n1673_001:0750a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　出息未反間　　聞是諸大苦",
        "from": "T32n1673_001:0750a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　其心不驚怖　　是則木石人",
        "from": "T32n1673_001:0750a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眼見報應像　　復聞智者說",
        "from": "T32n1673_001:0750a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼採佛經典　　內心正思惟",
        "from": "T32n1673_001:0750a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　則應大怖畏　　何況身自經",
        "from": "T32n1673_001:0750a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切受苦中　　無擇最大苦",
        "from": "T32n1673_001:0750a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切受樂中　　愛盡第一樂",
        "from": "T32n1673_001:0750a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　日夜各三時　　三百槍貫身",
        "from": "T32n1673_001:0750a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲比無擇苦　　百千倍非譬",
        "from": "T32n1673_001:0750a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無量諸楚毒　　求死不可得",
        "from": "T32n1673_001:0750a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　受罪百千歲　　惡業盡乃畢",
        "from": "T32n1673_001:0750a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不淨苦果報　　身口業為種",
        "from": "T32n1673_001:0750a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不種則不有　　王宜斷苦本",
        "from": "T32n1673_001:0750a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若墮畜生趣　　繫縛殺害苦",
        "from": "T32n1673_001:0750a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　貪害狂亂心　　怨結更相食",
        "from": "T32n1673_001:0750a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或為取珠寶　　毛尾皮肉骨",
        "from": "T32n1673_001:0750a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　由是喪身命　　解剝斷截痛",
        "from": "T32n1673_001:0750b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　駿足有大力　　穿頸服乘苦",
        "from": "T32n1673_001:0750b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　狂逸不調馴　　策勒而榜楚",
        "from": "T32n1673_001:0750b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　餓鬼思飲食　　所念未曾有",
        "from": "T32n1673_001:0750b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　飢渴寒熱迫　　長夜無休息",
        "from": "T32n1673_001:0750b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或身如大山　　咽口若針鋒",
        "from": "T32n1673_001:0750b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　飢渴內燒燃　　對食食無從",
        "from": "T32n1673_001:0750b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或見糞膿唾　　群走競馳趣",
        "from": "T32n1673_001:0750b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　到則自然滅　　望絕增苦惱",
        "from": "T32n1673_001:0750b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　飢渴煎其內　　瘤癭發癰疽",
        "from": "T32n1673_001:0750b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　更共相撮搏　　齟齚唼膿血",
        "from": "T32n1673_001:0750b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　羸瘡皮骨連　　裸形被長髮",
        "from": "T32n1673_001:0750b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身長若枯木　　熾焰從口出",
        "from": "T32n1673_001:0750b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　還自焚其身　　狀燒多羅樹",
        "from": "T32n1673_001:0750b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　處夏希夜涼　　月光增其熱",
        "from": "T32n1673_001:0750b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　在冬思晝溫　　日出逾氷結",
        "from": "T32n1673_001:0750b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　向樹果即消　　趣河水輒竭",
        "from": "T32n1673_001:0750b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　經萬五千歲　　業持命不絕",
        "from": "T32n1673_001:0750b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　久受無量苦　　斯由宿罪緣",
        "from": "T32n1673_001:0750b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　種種諸惱逼　　純苦初無間",
        "from": "T32n1673_001:0750b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　貪惜極慳著　　佛說餓鬼因",
        "from": "T32n1673_001:0750b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生天雖快樂　　福盡極大苦",
        "from": "T32n1673_001:0750b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　斯非賢聖果　　慧者所不怙",
        "from": "T32n1673_001:0750b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身體不光澤　　不樂本所座",
        "from": "T32n1673_001:0750b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　華冠卒萎落　　塵垢忽著身",
        "from": "T32n1673_001:0750b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　腋下流汗汁　　當知死時至",
        "from": "T32n1673_001:0750b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善趣淨業盡　　復墮三惡道",
        "from": "T32n1673_001:0750b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或生阿修羅　　貪嫉常苦惱",
        "from": "T32n1673_001:0750b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　雖有智聰明　　終不見真諦",
        "from": "T32n1673_001:0750b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生死六趣中　　輪轉常不息",
        "from": "T32n1673_001:0750c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　勝法不受生　　生者眾苦器",
        "from": "T32n1673_001:0750c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　假令頂火然　　正意慎勿念",
        "from": "T32n1673_001:0750c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不受後有業　　專心勤修習",
        "from": "T32n1673_001:0750c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　戒品禪定慧　　寂靜調不動",
        "from": "T32n1673_001:0750c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當求涅槃道　　究竟離生死",
        "from": "T32n1673_001:0750c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　念擇及精進　　喜猗三昧捨",
        "from": "T32n1673_001:0750c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此七菩提分　　清淨甘露道",
        "from": "T32n1673_001:0750c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無智則不禪　　無禪亦不智",
        "from": "T32n1673_001:0750c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是二俱成就　　能出生死流",
        "from": "T32n1673_001:0750c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無邊大苦海　　視如牛跡水",
        "from": "T32n1673_001:0750c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十四無記論　　佛說不應思",
        "from": "T32n1673_001:0750c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是非安隱道　　亦非寂滅處",
        "from": "T32n1673_001:0750c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無明緣諸行　　即緣彼生識",
        "from": "T32n1673_001:0750c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　名色從識起　　六入因名色",
        "from": "T32n1673_001:0750c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　六入生六觸　　從觸起諸受",
        "from": "T32n1673_001:0750c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸受為愛因　　從愛生四取",
        "from": "T32n1673_001:0750c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　四取生三有　　因有愛後生",
        "from": "T32n1673_001:0750c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　從生致老死　　憂悲諸苦惱",
        "from": "T32n1673_001:0750c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無量眾苦聚　　生盡則都滅",
        "from": "T32n1673_001:0750c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　最勝所顯示　　甚深緣起法",
        "from": "T32n1673_001:0750c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若能正觀察　　真實見之上",
        "from": "T32n1673_001:0750c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是真實見　　是則為見佛",
        "from": "T32n1673_001:0750c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　正見正思惟　　正語正業命",
        "from": "T32n1673_001:0750c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　正念正方便　　及正三摩提",
        "from": "T32n1673_001:0750c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　八分聖賢道　　寂滅當修習",
        "from": "T32n1673_001:0750c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生為真諦苦　　恩愛則是集",
        "from": "T32n1673_001:0750c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　苦滅名解脫　　到彼謂八道",
        "from": "T32n1673_001:0750c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為見彼真諦　　常勤修正智",
        "from": "T32n1673_001:0750c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　雖處五欲樂　　慧者能出離",
        "from": "T32n1673_001:0751a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能證正法者　　皆從凡夫起",
        "from": "T32n1673_001:0751a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不從虛空墮　　亦不從地出",
        "from": "T32n1673_001:0751a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　明哲無畏王　　領要不待煩",
        "from": "T32n1673_001:0751a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　宜修正法橋　　越度生死淵",
        "from": "T32n1673_001:0751a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如上諸深法　　出家猶難精",
        "from": "T32n1673_001:0751a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　況復御世主　　而能具足行",
        "from": "T32n1673_001:0751a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨時漸修習　　勿令日空過",
        "from": "T32n1673_001:0751a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切人修善　　常生隨喜心",
        "from": "T32n1673_001:0751a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自行三種業　　正迴向佛道",
        "from": "T32n1673_001:0751a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當於未來世　　受此無量福",
        "from": "T32n1673_001:0751a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常生天人中　　得為自在王",
        "from": "T32n1673_001:0751a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　與大菩薩眾　　遊戲諸神通",
        "from": "T32n1673_001:0751a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　方便化眾生　　嚴淨佛國土",
        "from": "T32n1673_001:0751a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　施戒慧為種　　往返人天中",
        "from": "T32n1673_001:0751a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無垢淨名稱　　流布十方國",
        "from": "T32n1673_001:0751a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世間導人主　　上生化天王",
        "from": "T32n1673_001:0751a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　令捨五欲樂　　遠離諸放逸",
        "from": "T32n1673_001:0751a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生迷正濟　　漂浪隨四流",
        "from": "T32n1673_001:0751a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無量生死苦　　度令至彼岸",
        "from": "T32n1673_001:0751a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　緣此成佛道　　究竟大涅槃",
        "from": "T32n1673_001:0751a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸發諸王要偈",
        "from": "T32n1673_001:0751a22_0",
        "context_with_next_sentence": false
    }
]