[
    {
        "source_sentence": "大宗地玄文本論卷第十",
        "from": "T32n1669_010:0683c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴菩薩造",
        "from": "T32n1669_010:0683c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真諦三藏譯",
        "from": "T32n1669_010:0683c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[(王*昍)/(王*屾)][囗@日]陀尸梵迦諾道路大決擇分第十九如是已說摩訶無二山王最勝高頂一地大決擇分。",
        "from": "T32n1669_010:0683c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當說[(王*昍)/(王*屾)][囗@日]陀尸梵迦諾道路大決擇分。",
        "from": "T32n1669_010:0683c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何。",
        "from": "T32n1669_010:0683c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "T32n1669_010:0683c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　[(王*昍)/(王*屾)][囗@日]道路中　　七變對修行　以為道路量　　無有餘行相論曰。",
        "from": "T32n1669_010:0683c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此偈中為明何義。",
        "from": "T32n1669_010:0683c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲現示[(王*昍)/(王*屾)][囗@日]道路中。",
        "from": "T32n1669_010:0683c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯以七變對為其界量。",
        "from": "T32n1669_010:0683c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無餘相故。",
        "from": "T32n1669_010:0683c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈[(王*昍)/(王*屾)][囗@日]道路中七變對修行以為道路量無有餘行相故。",
        "from": "T32n1669_010:0683c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名為七變修行。",
        "from": "T32n1669_010:0683c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形相如何。",
        "from": "T32n1669_010:0683c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "T32n1669_010:0683c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　七變有三種　　功德過患等",
        "from": "T32n1669_010:0683c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　五十一位中　　上下七變轉",
        "from": "T32n1669_010:0683c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　增長功德品　　及諸煩惱海",
        "from": "T32n1669_010:0683c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1669_010:0683c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七變修行總有幾數。",
        "from": "T32n1669_010:0683c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三種故。",
        "from": "T32n1669_010:0683c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何為三。",
        "from": "T32n1669_010:0683c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者功德七變。",
        "from": "T32n1669_010:0683c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者過患七變。",
        "from": "T32n1669_010:0683c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者等量七變。",
        "from": "T32n1669_010:0683c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名為三。",
        "from": "T32n1669_010:0683c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈七變有三種功德過患等故。",
        "from": "T32n1669_010:0683c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言變相者。",
        "from": "T32n1669_010:0683c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十一種金剛位中。",
        "from": "T32n1669_010:0683c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向上上轉向下下轉具足七變。",
        "from": "T32n1669_010:0683c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長功德增長過患廣大轉故。",
        "from": "T32n1669_010:0683c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈五十一位中上下七變轉增長功德品及諸煩惱海故。",
        "from": "T32n1669_010:0683c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且過患七變形相如何耶。",
        "from": "T32n1669_010:0683c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "T32n1669_010:0683c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　最第一變中　　上各增百數",
        "from": "T32n1669_010:0683c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　下各增千數　　各障一二德",
        "from": "T32n1669_010:0684a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後六變如次　　增倍倍數轉",
        "from": "T32n1669_010:0684a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1669_010:0684a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一變中增幾數轉。",
        "from": "T32n1669_010:0684a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障幾淨法。",
        "from": "T32n1669_010:0684a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂上轉時中。",
        "from": "T32n1669_010:0684a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一位位各增百數煩惱品類。",
        "from": "T32n1669_010:0684a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障一淨法。",
        "from": "T32n1669_010:0684a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若下轉時中。",
        "from": "T32n1669_010:0684a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一位位各增千數煩惱品類。",
        "from": "T32n1669_010:0684a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障二淨法。",
        "from": "T32n1669_010:0684a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈最第一變中上各增百數下各增千數各障一二德故。",
        "from": "T32n1669_010:0684a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後六變中功德過患。",
        "from": "T32n1669_010:0684a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其次第增倍數故。",
        "from": "T32n1669_010:0684a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈後六變如次增倍倍數轉故。",
        "from": "T32n1669_010:0684a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是已說現示過患七變門。",
        "from": "T32n1669_010:0684a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當說現示功德七變門。",
        "from": "T32n1669_010:0684a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何。",
        "from": "T32n1669_010:0684a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "T32n1669_010:0684a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　最第一變中　　上各增一億",
        "from": "T32n1669_010:0684a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　下各增二億　　漸漸次第轉",
        "from": "T32n1669_010:0684a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後六變如次　　增倍倍數轉",
        "from": "T32n1669_010:0684a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不壞患數量　　為功德變作",
        "from": "T32n1669_010:0684a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1669_010:0684a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一變中增幾數轉。",
        "from": "T32n1669_010:0684a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂上轉時中。",
        "from": "T32n1669_010:0684a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一位位各增一億數功德品類。",
        "from": "T32n1669_010:0684a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸漸而轉。",
        "from": "T32n1669_010:0684a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若下轉時中。",
        "from": "T32n1669_010:0684a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一位位各增二億數功德品類漸漸轉故。",
        "from": "T32n1669_010:0684a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈最第一變中上各增一億下各增二億漸漸次第轉故。",
        "from": "T32n1669_010:0684a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後六變中。",
        "from": "T32n1669_010:0684a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其次第增倍數故。",
        "from": "T32n1669_010:0684a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈後六變如次增倍倍數轉故。",
        "from": "T32n1669_010:0684a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是功德煩惱品類。",
        "from": "T32n1669_010:0684a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為斷不斷。",
        "from": "T32n1669_010:0684a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯變作轉。",
        "from": "T32n1669_010:0684a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動壞故。",
        "from": "T32n1669_010:0684a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈不壞患數量為功德變作故如是已說現示功德七變門。",
        "from": "T32n1669_010:0684a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當說現示等量七變門。",
        "from": "T32n1669_010:0684a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何。",
        "from": "T32n1669_010:0684a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "T32n1669_010:0684a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　最第一變中　　各上增一千",
        "from": "T32n1669_010:0684a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　各下增二萬　　等數量漸轉",
        "from": "T32n1669_010:0684a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後六變如次　　增倍倍數轉",
        "from": "T32n1669_010:0684a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無斷障差別　　唯對量建立",
        "from": "T32n1669_010:0684a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1669_010:0684a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一變中增幾數轉。",
        "from": "T32n1669_010:0684a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂上轉時中。",
        "from": "T32n1669_010:0684a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一位位各增一千。",
        "from": "T32n1669_010:0684a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如次第轉。",
        "from": "T32n1669_010:0684b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若下轉時中。",
        "from": "T32n1669_010:0684b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一位位各增二萬。",
        "from": "T32n1669_010:0684b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如次第轉。",
        "from": "T32n1669_010:0684b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈最第一變中各上增一千各下增二萬故。",
        "from": "T32n1669_010:0684b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其數量品有增減不。",
        "from": "T32n1669_010:0684b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯平等量非差別量。",
        "from": "T32n1669_010:0684b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈等數量漸轉故。",
        "from": "T32n1669_010:0684b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後六變中。",
        "from": "T32n1669_010:0684b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其次第增倍數轉。",
        "from": "T32n1669_010:0684b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂一倍故。",
        "from": "T32n1669_010:0684b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈後六變如次增倍倍數轉故。",
        "from": "T32n1669_010:0684b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七變。",
        "from": "T32n1669_010:0684b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無照相亦無覆相。",
        "from": "T32n1669_010:0684b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯平等量分分建立。",
        "from": "T32n1669_010:0684b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈無斷障差別唯對量建立故。",
        "from": "T32n1669_010:0684b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中次第功德七變以為其終。",
        "from": "T32n1669_010:0684b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應審觀察。",
        "from": "T32n1669_010:0684b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深種子修多羅中。",
        "from": "T32n1669_010:0684b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是說。",
        "from": "T32n1669_010:0684b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明達裏藏中唯有三變。",
        "from": "T32n1669_010:0684b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七為量不增不減。",
        "from": "T32n1669_010:0684b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如七步蛇七葉樹法爾道理。",
        "from": "T32n1669_010:0684b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初唯染品中染淨俱。",
        "from": "T32n1669_010:0684b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後唯淨品。",
        "from": "T32n1669_010:0684b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至廣說故。",
        "from": "T32n1669_010:0684b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[(王*昍)/(王*屾)][囗@日]陀尸梵迦諾本王本地大決擇分第二十如是已說[(王*昍)/(王*屾)][囗@日]陀尸梵迦諾道路大決擇分。",
        "from": "T32n1669_010:0684b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當說[(王*昍)/(王*屾)][囗@日]陀尸梵迦諾本王本地大決擇分。",
        "from": "T32n1669_010:0684b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何。",
        "from": "T32n1669_010:0684b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "T32n1669_010:0684b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此本王體中　　有三種百變",
        "from": "T32n1669_010:0684b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　名次第如前　　等無有差別",
        "from": "T32n1669_010:0684b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1669_010:0684b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就此本王體中。",
        "from": "T32n1669_010:0684b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有三種百變修行。",
        "from": "T32n1669_010:0684b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名及次第如前所說。",
        "from": "T32n1669_010:0684b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈此本王體中有三種百變名次第如前等無有差別故。",
        "from": "T32n1669_010:0684b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三變形相如何。",
        "from": "T32n1669_010:0684b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "T32n1669_010:0684b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是三變中　　初各如次第",
        "from": "T32n1669_010:0684b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十千百億數　　後九十九變",
        "from": "T32n1669_010:0684b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如次增倍數　　漸漸次第轉",
        "from": "T32n1669_010:0684b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1669_010:0684b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就過患百變門中。",
        "from": "T32n1669_010:0684b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上及并下。",
        "from": "T32n1669_010:0684b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一變中增十億數次第漸轉。",
        "from": "T32n1669_010:0684b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就功德百變門中。",
        "from": "T32n1669_010:0684b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上及并下。",
        "from": "T32n1669_010:0684b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一變中增千億數次第漸轉。",
        "from": "T32n1669_010:0684b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就等量百變門中。",
        "from": "T32n1669_010:0684b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上并及下。",
        "from": "T32n1669_010:0684c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一變中增百億數次第漸轉。",
        "from": "T32n1669_010:0684c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈如是三變中初各如次第十千百億數故。",
        "from": "T32n1669_010:0684c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後九十九變中。",
        "from": "T32n1669_010:0684c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉各各如其次第增倍數轉。",
        "from": "T32n1669_010:0684c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如偈後九十九變如次增倍數漸漸次第轉故。",
        "from": "T32n1669_010:0684c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海山王地地品類修多羅中。",
        "from": "T32n1669_010:0684c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是說。",
        "from": "T32n1669_010:0684c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來藏體中有三流轉品。",
        "from": "T32n1669_010:0684c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以百數為量。",
        "from": "T32n1669_010:0684c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無超次第漸漸轉去。",
        "from": "T32n1669_010:0684c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三中。",
        "from": "T32n1669_010:0684c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初功德少其過患多中數量等。",
        "from": "T32n1669_010:0684c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後唯功德。",
        "from": "T32n1669_010:0684c08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至廣說故。",
        "from": "T32n1669_010:0684c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "◎大宗地玄文本論卷第十",
        "from": "T32n1669_010:0684c09_23",
        "context_with_next_sentence": false
    }
]