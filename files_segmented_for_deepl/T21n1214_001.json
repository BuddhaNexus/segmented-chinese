[
    {
        "source_sentence": "聖閻曼德迦威怒王立成大神驗",
        "from": "T21n1214_001:0073a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦法一卷",
        "from": "T21n1214_001:0073a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿",
        "from": "T21n1214_001:0073a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅國公食邑三千戶賜紫贈司空",
        "from": "T21n1214_001:0073a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡大鑒正號大廣智大興善寺",
        "from": "T21n1214_001:0073a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏沙門不空奉　詔譯",
        "from": "T21n1214_001:0073a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼佛。",
        "from": "T21n1214_001:0073a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀淨居天宮諸菩薩天龍八部。",
        "from": "T21n1214_001:0073a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告文殊師利言。",
        "from": "T21n1214_001:0073a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去十阿僧祇俱胝如來。",
        "from": "T21n1214_001:0073a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆於大聖文殊師利菩薩。",
        "from": "T21n1214_001:0073a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發無上菩提心。",
        "from": "T21n1214_001:0073a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說文殊師利真言教法。",
        "from": "T21n1214_001:0073a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令佛法久住世間。",
        "from": "T21n1214_001:0073a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持國王護持國界。",
        "from": "T21n1214_001:0073a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以十善法化導有情。",
        "from": "T21n1214_001:0073a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今正是時汝當宣說。",
        "from": "T21n1214_001:0073a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖閻曼德威怒王。",
        "from": "T21n1214_001:0073a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身乘青水牛持種種器仗。",
        "from": "T21n1214_001:0073a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以髑髏為瓔珞。",
        "from": "T21n1214_001:0073a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭冠虎皮為裙。",
        "from": "T21n1214_001:0073a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身長。",
        "from": "T21n1214_001:0073a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大無量由旬。",
        "from": "T21n1214_001:0073a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍身火焰洞然如劫燒焰。",
        "from": "T21n1214_001:0073a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顧視四方如師子奮迅。",
        "from": "T21n1214_001:0073a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說勝根本真言曰。",
        "from": "T21n1214_001:0073a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三漫多沒馱(引)南(一)阿鉢囉(二合)底賀多舍娑那南(二)唵羯囉羯羅(三)矩嚕矩嚕(四)麼麼迦哩閻(五)伴惹伴惹(六)薩嚩尾覲南(二合引七)諾賀諾賀(八)薩嚩嚩日囉(二合)尾曩野建(九)暮囉馱(二合)吒迦(十)爾尾旦多迦囉(十一)摩訶尾訖哩(二合)多嚕比儜(十二)鉢左鉢左(十三)薩嚩訥瑟鵮(二合十四)摩賀誐那鉢底(十五)爾尾旦多迦囉(十六)滿馱滿馱(十七)薩嚩孽囉(二合)憾(十八)殺目佉(十九)殺步惹(二十)殺左囉拏(二十一)嚕捺囉(二合)麼曩野(二十二)尾瑟怒(二合)麼曩野(二十三)沒囉(二合)紇麼(二合)撚泥嚩那曩野(二十四)摩尾覽嚩麼尾覽嚩(二十五)囉戶囉戶(二十六)曼拏攞末弟(二十七)鉢囉(二合)吠舍野(二十八)三麼野麼怒娑麼(二合)囉(二十九)吽吽吽吽吽吽娑頗(二合)吒娑頗(二合)吒娑嚩(二合引)賀纔誦此真言。",
        "from": "T21n1214_001:0073a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三千大千世界六種震動。",
        "from": "T21n1214_001:0073b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有天魔毘那夜迦於世間作障者。",
        "from": "T21n1214_001:0073b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所居宮殿皆大震動恐怖不安。",
        "from": "T21n1214_001:0073b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來雲集頂禮大威德尊白言。",
        "from": "T21n1214_001:0073b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願哀愍令我無畏。",
        "from": "T21n1214_001:0073b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時威怒王白佛言。",
        "from": "T21n1214_001:0073b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今所說真言。",
        "from": "T21n1214_001:0073b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地菩薩聞此真言。",
        "from": "T21n1214_001:0073b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不隨順教法者尚能銷融。",
        "from": "T21n1214_001:0073b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況餘諸天龍八部作障難者。",
        "from": "T21n1214_001:0073b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先誦此真言滿一萬遍。",
        "from": "T21n1214_001:0073b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能作種種猛利調伏法。",
        "from": "T21n1214_001:0073b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有惡人怨家。",
        "from": "T21n1214_001:0073b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於善人起惡意相危害者。",
        "from": "T21n1214_001:0073b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當鑄一金銅威怒王像其像隨意大小。",
        "from": "T21n1214_001:0073b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一淨室作三角壇。",
        "from": "T21n1214_001:0073b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安像壇中。",
        "from": "T21n1214_001:0073b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇底畫彼人形或書姓名。",
        "from": "T21n1214_001:0073b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像面向北。",
        "from": "T21n1214_001:0073b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦者身著黑衣。",
        "from": "T21n1214_001:0073b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向南坐。",
        "from": "T21n1214_001:0073b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結槊印忿怒勵聲。",
        "from": "T21n1214_001:0073b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日三時念誦一七日。",
        "from": "T21n1214_001:0073b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其惡人或患惡疾或患惡瘡或身喪滅。",
        "from": "T21n1214_001:0073b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法畫彼設都嚧於貝葉上或樺皮上。",
        "from": "T21n1214_001:0073b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫了結槊印。",
        "from": "T21n1214_001:0073b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按彼心上誦真言加持一百八遍。",
        "from": "T21n1214_001:0073b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後置像坐下。",
        "from": "T21n1214_001:0073b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取熒惑日午時作法。",
        "from": "T21n1214_001:0073b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又每日於中夜。",
        "from": "T21n1214_001:0073b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以槊印按彼像心上。",
        "from": "T21n1214_001:0073b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言二十一遍。",
        "from": "T21n1214_001:0073b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想彼設覩嚧在像底。",
        "from": "T21n1214_001:0073b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并營從眷屬皆衰喪。",
        "from": "T21n1214_001:0073b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法先畫三角壇。",
        "from": "T21n1214_001:0073b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中畫設覩嚧形。",
        "from": "T21n1214_001:0073b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取佉陀羅木作橛可長四寸。",
        "from": "T21n1214_001:0073b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橛頭如獨股形。",
        "from": "T21n1214_001:0073b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以真言加持一百八遍真言。",
        "from": "T21n1214_001:0073b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句中安彼人名。",
        "from": "T21n1214_001:0073b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此句下加之。",
        "from": "T21n1214_001:0073b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便釘彼心上。",
        "from": "T21n1214_001:0073b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一月於像前三時念誦。",
        "from": "T21n1214_001:0073b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時別一百八遍。",
        "from": "T21n1214_001:0073c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力供養焚安悉香。",
        "from": "T21n1214_001:0073c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿一月已設覩嚧即坐臥不安遠走而去。",
        "from": "T21n1214_001:0073c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久後身患至死。",
        "from": "T21n1214_001:0073c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦者起悲愍。",
        "from": "T21n1214_001:0073c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為作息災護摩法彼則如故。",
        "from": "T21n1214_001:0073c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說大心真言法真言曰。",
        "from": "T21n1214_001:0073c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵紇哩(二合)瑟置哩(二合引)尾訖哩(二合)多娜曩吽薩嚩設咄論(二合)曩捨野塞擔(二合)婆野薩擔(二合)婆野娑頗(二合)吒(半音)娑頗(二合)吒(半音)娑嚩(二合引)賀對大聖像前作三角壇。",
        "from": "T21n1214_001:0073c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言一萬遍。",
        "from": "T21n1214_001:0074a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功行即成。",
        "from": "T21n1214_001:0074a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後取黑泥。",
        "from": "T21n1214_001:0074a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揑作設覩嚧形仰臥。",
        "from": "T21n1214_001:0074a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於腹中著驢糞。",
        "from": "T21n1214_001:0074a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取驢骨作橛五枚長六寸。",
        "from": "T21n1214_001:0074a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一橛各誦真言一百八遍。",
        "from": "T21n1214_001:0074a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二橛釘左右二肩。",
        "from": "T21n1214_001:0074a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二橛釘兩髀。",
        "from": "T21n1214_001:0074a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一釘心上。",
        "from": "T21n1214_001:0074a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面南坐燒安悉香。",
        "from": "T21n1214_001:0074a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言一萬遍。",
        "from": "T21n1214_001:0074a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其捨覩嚧即患病吐血而死。",
        "from": "T21n1214_001:0074a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法對像前作三角火壇。",
        "from": "T21n1214_001:0074a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩七夜。",
        "from": "T21n1214_001:0074a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以棘刺柴然火。",
        "from": "T21n1214_001:0074a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取苦練葉書二相愛人名。",
        "from": "T21n1214_001:0074a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以葉相背。",
        "from": "T21n1214_001:0074a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用蛇皮裹。",
        "from": "T21n1214_001:0074a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鼠狼毛為繩纏葉上。",
        "from": "T21n1214_001:0074a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用一百八枚。",
        "from": "T21n1214_001:0074a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言句中稱彼人名。",
        "from": "T21n1214_001:0074a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言一遍一擲火中。",
        "from": "T21n1214_001:0074a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼二人即互相憎嫌不和。",
        "from": "T21n1214_001:0074a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法欲令惡人遠法。",
        "from": "T21n1214_001:0074a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取烏翅一百八枚。",
        "from": "T21n1214_001:0074a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搵芥子油於三角爐中燒。",
        "from": "T21n1214_001:0074a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棘刺柴然火。",
        "from": "T21n1214_001:0074a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩一夜。",
        "from": "T21n1214_001:0074a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言句中稱彼人名。",
        "from": "T21n1214_001:0074a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍一擲火中。",
        "from": "T21n1214_001:0074a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人不自由即便遠方去。",
        "from": "T21n1214_001:0074a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法欲於軍陣得勝者。",
        "from": "T21n1214_001:0074a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取茅草葉一百八枚。",
        "from": "T21n1214_001:0074a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長十二指。",
        "from": "T21n1214_001:0074a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搵油麻油三角爐中燒棘刺柴然火。",
        "from": "T21n1214_001:0074a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩七夜。",
        "from": "T21n1214_001:0074a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言一百八遍。",
        "from": "T21n1214_001:0074a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言句中稱彼將帥名。",
        "from": "T21n1214_001:0074a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍一擲火中。",
        "from": "T21n1214_001:0074a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得彼軍陣破得勝。",
        "from": "T21n1214_001:0074a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取鐵末六兩。",
        "from": "T21n1214_001:0074a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言句中稱彼人名。",
        "from": "T21n1214_001:0074a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後取一撮以真言加持。",
        "from": "T21n1214_001:0074a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍一擲三角爐中。",
        "from": "T21n1214_001:0074a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩七夜。",
        "from": "T21n1214_001:0074a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼設覩嚧即自衰喪。",
        "from": "T21n1214_001:0074a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取佉陀羅木橛長四指。",
        "from": "T21n1214_001:0074a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三角壇中。",
        "from": "T21n1214_001:0074a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以燒屍灰畫捨覩嚧形。",
        "from": "T21n1214_001:0074a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言加持一百八遍。",
        "from": "T21n1214_001:0074a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釘捨覩嚧心上。",
        "from": "T21n1214_001:0074a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自身為大威德忿怒尊。",
        "from": "T21n1214_001:0074a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左脚踏捨覩嚧心上。",
        "from": "T21n1214_001:0074b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言一千遍。",
        "from": "T21n1214_001:0074b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言句中稱彼人名。",
        "from": "T21n1214_001:0074b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人即滅亡。",
        "from": "T21n1214_001:0074b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說心中心法真言曰。",
        "from": "T21n1214_001:0074b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵瑟致唎(二合引)迦攞嚕跛吽欠娑嚩(二合引)賀念誦作此法時。",
        "from": "T21n1214_001:0074b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此心真言印身五處。",
        "from": "T21n1214_001:0074b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身及辟除結界用若能每日誦一千遍。",
        "from": "T21n1214_001:0074b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡人怨家不得其便。",
        "from": "T21n1214_001:0074b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼作惡法不成。",
        "from": "T21n1214_001:0074b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪詛&#;禱悉皆破壞若見惡夢誦七遍惡夢不應。",
        "from": "T21n1214_001:0074b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法結心中心印。",
        "from": "T21n1214_001:0074b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙揮設覩嚕方。",
        "from": "T21n1214_001:0074b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其家國界災起疫疾旱澇。",
        "from": "T21n1214_001:0074b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解時起大悲心。",
        "from": "T21n1214_001:0074b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙想彼國界人眾互起慈心。",
        "from": "T21n1214_001:0074b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相向如父如母如男如女。",
        "from": "T21n1214_001:0074b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言一萬遍即得災息。",
        "from": "T21n1214_001:0074b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結根本印法。",
        "from": "T21n1214_001:0074b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內相叉作拳。",
        "from": "T21n1214_001:0074b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指直竪。",
        "from": "T21n1214_001:0074b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭相合即成。",
        "from": "T21n1214_001:0074b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印有大威力有大神驗。",
        "from": "T21n1214_001:0074b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結此印誦真言。",
        "from": "T21n1214_001:0074b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人等同大威德忿怒明王身無有異。",
        "from": "T21n1214_001:0074b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說心印法。",
        "from": "T21n1214_001:0074b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前根本印。",
        "from": "T21n1214_001:0074b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒二頭指。",
        "from": "T21n1214_001:0074b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈如三戟叉即成。",
        "from": "T21n1214_001:0074b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印誦真言。",
        "from": "T21n1214_001:0074b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作事法皆得成就。",
        "from": "T21n1214_001:0074b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說心中心印。",
        "from": "T21n1214_001:0074b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前心印。",
        "from": "T21n1214_001:0074b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直竪二頭指即成。",
        "from": "T21n1214_001:0074b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印誦真言。",
        "from": "T21n1214_001:0074b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成辦一切事。",
        "from": "T21n1214_001:0074b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若欲摧他敵者。",
        "from": "T21n1214_001:0074b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當建三角壇。",
        "from": "T21n1214_001:0074b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中畫大威德明王。",
        "from": "T21n1214_001:0074b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身作玄雲色。",
        "from": "T21n1214_001:0074b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍身生火焰。",
        "from": "T21n1214_001:0074b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執持諸色器仗。",
        "from": "T21n1214_001:0074b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身安三字。",
        "from": "T21n1214_001:0074b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂頂安唵字。",
        "from": "T21n1214_001:0074b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口安噁字。",
        "from": "T21n1214_001:0074b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心安吽字。",
        "from": "T21n1214_001:0074b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就尊身已。",
        "from": "T21n1214_001:0074b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其像下置諸捨覩嚕并安名字。",
        "from": "T21n1214_001:0074b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對此像前。",
        "from": "T21n1214_001:0074b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當布於自身一同壇中像法。",
        "from": "T21n1214_001:0074b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威驗並皆如是。",
        "from": "T21n1214_001:0074b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結印誦前大心真言一千八十遍。",
        "from": "T21n1214_001:0074b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言句義中捨覩嚕下。",
        "from": "T21n1214_001:0074b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱彼名字。",
        "from": "T21n1214_001:0074c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼群黨自然退散。",
        "from": "T21n1214_001:0074c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或令多病吐血而斃。",
        "from": "T21n1214_001:0074c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又畫彼像及想己身。",
        "from": "T21n1214_001:0074c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並青黑色。",
        "from": "T21n1214_001:0074c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六足六首六臂。",
        "from": "T21n1214_001:0074c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以淨六趣滿六度成六通。",
        "from": "T21n1214_001:0074c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦三字明隨處一一布真言曰。",
        "from": "T21n1214_001:0074c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵噁吽",
        "from": "T21n1214_001:0074c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此加持成就身已即誦大威德明王讚。",
        "from": "T21n1214_001:0074c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨(引)嚩囉娜嚩日囉(二合)蘖囉(二合一)曼儒具灑摩賀(引)麼攞(二)娑賀娑囉(二合)吠遇尾惹異(三)尾覲曩(二合)囉瑟吒囉(二合)跛末娜迦次說二十三種供養能令所作之法速得成就。",
        "from": "T21n1214_001:0074c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次隨心真言曰。",
        "from": "T21n1214_001:0074c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵瑟置哩(二合)迦攞嚕跢吽欠薩嚩(二合引)賀(引)次心頂口心真言曰。",
        "from": "T21n1214_001:0074c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵噁吽(初結印念誦。",
        "from": "T21n1214_001:0074c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先想三字。",
        "from": "T21n1214_001:0074c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青色即成本尊。",
        "from": "T21n1214_001:0074c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是六足六首六臂。",
        "from": "T21n1214_001:0074c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以淨六趣滿六度成六通)聖閻曼德迦忿怒王念誦法次說二十三種供養先攝頌曰。",
        "from": "T21n1214_001:0074c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　初從掃地誦　　請召次閼伽",
        "from": "T21n1214_001:0074c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　獻座澡浴鈴　　衣塗香焚花",
        "from": "T21n1214_001:0074c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　加持五色粉　　圍壇誦真言",
        "from": "T21n1214_001:0075a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　次誦寶幢幡　　寶軒寶樓閣",
        "from": "T21n1214_001:0075a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　扇及寶嚴等　　燈真言獻食",
        "from": "T21n1214_001:0075a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　及獻念誦數　　奉送佛最後",
        "from": "T21n1214_001:0075a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　誦畢依畫像　　次第皆如是",
        "from": "T21n1214_001:0075a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此偈智者祕　　持誦者自知",
        "from": "T21n1214_001:0075a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此是真言曰　　計數二十三",
        "from": "T21n1214_001:0075a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　今從掃地起掃地真言曰。",
        "from": "T21n1214_001:0075a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)儞(寧逸反)麼他儞(准上)麼他(二)薩嚩步旦(引)請召真言曰。",
        "from": "T21n1214_001:0075a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)殺目佉(二)殺步惹(三)殺左囉拏(四)阿徒牟娑攞(五)跛囉戍播捨訶娑多(二合)閼伽真言曰。",
        "from": "T21n1214_001:0075a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵摩訶尾覲曩(二合)伽(引)多迦獻座真言曰。",
        "from": "T21n1214_001:0075a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵吽吽蜜(微一反下同)頗(二合)吒(半音)蜜頗(二合)吒(半音上同)澡浴真言曰。",
        "from": "T21n1214_001:0075a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩步多婆野吒迦(二合)囉",
        "from": "T21n1214_001:0075a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鈴真言曰。",
        "from": "T21n1214_001:0075a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿吒吒訶娑曩(引)儞寧",
        "from": "T21n1214_001:0075a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻衣真言曰。",
        "from": "T21n1214_001:0075a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾夜(二合)伽囉(二合)左麼儞嚩娑曩塗香真言曰。",
        "from": "T21n1214_001:0075a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵矩嚕矩嚕薩嚩羯麼抳",
        "from": "T21n1214_001:0075a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚香真言曰。",
        "from": "T21n1214_001:0075a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵親(上)娜親娜薩嚩滿怛囉(二合)花真言曰。",
        "from": "T21n1214_001:0075a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵頻娜頻娜跛囉(二合引)母捺囕(二合)加持五色粉圍壇真言曰。",
        "from": "T21n1214_001:0075b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩訥瑟鵮(二合)鉢囉(二合引)吠捨野鉢囉(二合)吠捨野曼茶羅末弟寶帳真言曰。",
        "from": "T21n1214_001:0075b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵麼(引)尾覽嚩麼(引)尾覽嚩",
        "from": "T21n1214_001:0075b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢旛真言曰。",
        "from": "T21n1214_001:0075b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵吠嚩娑嚩(二合引)多貳尾旦(引)多迦囉幡真言曰。",
        "from": "T21n1214_001:0075b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵矩嚕矩嚕麼麼迦(引)哩焰(二合)寶軒冕真言曰。",
        "from": "T21n1214_001:0075b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩舍跛哩布囉迦",
        "from": "T21n1214_001:0075b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶樓閣真言曰。",
        "from": "T21n1214_001:0075b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵三麼耶麼努娑麼(二合)囉",
        "from": "T21n1214_001:0075b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扇真言曰。",
        "from": "T21n1214_001:0075b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵塞怖(二合)吒野塞怖(二合)吒野莊嚴真言曰。",
        "from": "T21n1214_001:0075b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿(引)羯囉灑野阿(引)羯囉灑野燈真言曰。",
        "from": "T21n1214_001:0075b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵娜訶娜訶鉢左鉢左",
        "from": "T21n1214_001:0075b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻食真言曰。",
        "from": "T21n1214_001:0075b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵佉佉佉(引)呬佉(引)呬訥瑟吒(二合)薩怛嚩(二合)曩麼迦獻念誦遍數真言曰。",
        "from": "T21n1214_001:0075b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵係係婆誐梵",
        "from": "T21n1214_001:0075b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉送真言曰。",
        "from": "T21n1214_001:0075b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵緊至囉(引)野徙",
        "from": "T21n1214_001:0075b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拂真言曰。",
        "from": "T21n1214_001:0075b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾訖哩(二合)多曩曩",
        "from": "T21n1214_001:0075b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右已上真言。",
        "from": "T21n1214_001:0075c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者但誦三遍或七遍。",
        "from": "T21n1214_001:0075c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則具如上二十三種供養。",
        "from": "T21n1214_001:0075c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求悉地速得成就。",
        "from": "T21n1214_001:0075c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於上二十三種明中。",
        "from": "T21n1214_001:0075c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持五色粉明。",
        "from": "T21n1214_001:0075c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於建立壇已。",
        "from": "T21n1214_001:0075c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用此真言加持其粉以用圍壇。",
        "from": "T21n1214_001:0075c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其奉送真言念誦畢已。",
        "from": "T21n1214_001:0075c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲出道場。",
        "from": "T21n1214_001:0075c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應誦此明以遣聖眾。",
        "from": "T21n1214_001:0075c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法欲令聖者疾得降臨。",
        "from": "T21n1214_001:0075c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速除障難滿本願者。",
        "from": "T21n1214_001:0075c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前建立三角火壇。",
        "from": "T21n1214_001:0075c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取安悉香及白芥子與摩努沙嚕地囉。",
        "from": "T21n1214_001:0075c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和諸毒藥赤芥子并油。",
        "from": "T21n1214_001:0075c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨管之葉一百八枚苦練枝一百八枚。",
        "from": "T21n1214_001:0075c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "削兩頭尖長十二指。",
        "from": "T21n1214_001:0075c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以用搵油誦真言曰。",
        "from": "T21n1214_001:0075c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿多沒馱(引)喃(引一)阿鉢囉(二合)底賀多舍(引)娑曩(引)南(引)怛儞野(二合)他(引)係係摩賀(引)俱嚕(二合引)馱(三)殺目佉(四)殺部惹(五)殺者囉拏(六)薩嚩尾(引)覲曩(二合)伽(引)多迦(七)吽吽緊支囉(引)野枲摩賀(引)尾曩(引)野迦(八)貳尾旦(引)多(上)迦囉(九)耨娑嚩(二合)跛難(二合)冥曩(引)捨野(十)攞護攞護三麼野麼弩娑麼(二合)囉(十一)娑發(二合)吒娑發(二合)吒(吒半音呼之上同十二)娑嚩(二合引)訶(引)誦一遍已。",
        "from": "T21n1214_001:0075c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸香藥一擲火中。",
        "from": "T21n1214_001:0076a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡一百八枚已。",
        "from": "T21n1214_001:0076a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求之願皆得成就。",
        "from": "T21n1214_001:0076a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時聖者不違本誓。",
        "from": "T21n1214_001:0076a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾至道場為作加護。",
        "from": "T21n1214_001:0076a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有惡夢由加持力皆悉不現究竟消滅。",
        "from": "T21n1214_001:0076a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者作前諸法念誦畢已。",
        "from": "T21n1214_001:0076a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當出道場起慈悲心勿生怨害。",
        "from": "T21n1214_001:0076a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經行任意轉讀大乘。",
        "from": "T21n1214_001:0076a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖閻曼德迦威怒王立成大神驗念誦法",
        "from": "T21n1214_001:0076a12_0",
        "context_with_next_sentence": false
    }
]