[
    {
        "source_sentence": "居士傳十五",
        "from": "X88n1646_015:0212a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李長者傳",
        "from": "X88n1646_015:0212a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李長者。",
        "from": "X88n1646_015:0212a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名通元。",
        "from": "X88n1646_015:0212a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐宗室子也。",
        "from": "X88n1646_015:0212a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人美鬚髯。",
        "from": "X88n1646_015:0212a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朗眉目。",
        "from": "X88n1646_015:0212a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丹唇紫肌。",
        "from": "X88n1646_015:0212a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天稟超特而學無常師。",
        "from": "X88n1646_015:0212a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迹不可測。",
        "from": "X88n1646_015:0212a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少留情易道。",
        "from": "X88n1646_015:0212a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙盡微旨。",
        "from": "X88n1646_015:0212a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年四十餘專精內典。",
        "from": "X88n1646_015:0212a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞遊五臺。",
        "from": "X88n1646_015:0212a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入善住院。",
        "from": "X88n1646_015:0212a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逢異僧授以華嚴大旨。",
        "from": "X88n1646_015:0212a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將別。",
        "from": "X88n1646_015:0212a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者曰。",
        "from": "X88n1646_015:0212a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師去何之。",
        "from": "X88n1646_015:0212a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧指北峯頂。",
        "from": "X88n1646_015:0212a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夜望見北峯火光亘天。",
        "from": "X88n1646_015:0212a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者曳杖而登。",
        "from": "X88n1646_015:0212a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見前僧在火光中樹紫金幢。",
        "from": "X88n1646_015:0212a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝冠者數百圍繞。",
        "from": "X88n1646_015:0212a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者湧身入。",
        "from": "X88n1646_015:0212a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮而起。",
        "from": "X88n1646_015:0212a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽失前境。",
        "from": "X88n1646_015:0212a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃於巖上一坐三日。",
        "from": "X88n1646_015:0212a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而下山。",
        "from": "X88n1646_015:0212a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂發弘經之願。",
        "from": "X88n1646_015:0212a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在則天朝會華嚴經新譯八十卷成。",
        "from": "X88n1646_015:0212a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持至太原。",
        "from": "X88n1646_015:0212a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寓高仙奴家。",
        "from": "X88n1646_015:0212a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日食十棗栢葉餅一枚。",
        "from": "X88n1646_015:0212a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居三年。",
        "from": "X88n1646_015:0212a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷馬氏古佛堂。",
        "from": "X88n1646_015:0212a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱十年。",
        "from": "X88n1646_015:0212a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又負經而去。",
        "from": "X88n1646_015:0212a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行二十里。",
        "from": "X88n1646_015:0212a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇一虎當路。",
        "from": "X88n1646_015:0212a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者撫之曰。",
        "from": "X88n1646_015:0212a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾將著論釋華嚴經。",
        "from": "X88n1646_015:0212a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當為我擇一棲止。",
        "from": "X88n1646_015:0212a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以經囊負其背。",
        "from": "X88n1646_015:0212a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至神福山下有土龕焉。",
        "from": "X88n1646_015:0212a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎依龕而蹲。",
        "from": "X88n1646_015:0212a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者入龕。",
        "from": "X88n1646_015:0212a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎乃去。",
        "from": "X88n1646_015:0212a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中故無水。",
        "from": "X88n1646_015:0212a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夕風雷拔龕前松。",
        "from": "X88n1646_015:0212a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出泉清洌甘美。",
        "from": "X88n1646_015:0212a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中人因號之曰長者泉。",
        "from": "X88n1646_015:0212a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夕則吐白光以代鐙炬。",
        "from": "X88n1646_015:0212a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二女子不知其自來。",
        "from": "X88n1646_015:0212a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日為長者汲泉炷香奉紙墨。",
        "from": "X88n1646_015:0212a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食時則具淨饌置長者前。",
        "from": "X88n1646_015:0212a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食已徹去。",
        "from": "X88n1646_015:0212a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起開元七年至十八年。",
        "from": "X88n1646_015:0212a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著論畢。",
        "from": "X88n1646_015:0212a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二女子亦遂去不見。",
        "from": "X88n1646_015:0212a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者自為論序云。",
        "from": "X88n1646_015:0212a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫以有情之本依智海以為源。",
        "from": "X88n1646_015:0212a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含識之流總法身而為體。",
        "from": "X88n1646_015:0212b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只為情生智隔。",
        "from": "X88n1646_015:0212b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想變體殊。",
        "from": "X88n1646_015:0212b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達本情亡。",
        "from": "X88n1646_015:0212b02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知心體合。",
        "from": "X88n1646_015:0212b02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此大方廣佛華嚴經者。",
        "from": "X88n1646_015:0212b02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明眾生之本際。",
        "from": "X88n1646_015:0212b03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示諸佛之果源。",
        "from": "X88n1646_015:0212b03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為本也。",
        "from": "X88n1646_015:0212b03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以功成。",
        "from": "X88n1646_015:0212b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為源也。",
        "from": "X88n1646_015:0212b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以行得。",
        "from": "X88n1646_015:0212b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功亡本就。",
        "from": "X88n1646_015:0212b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行盡源成。",
        "from": "X88n1646_015:0212b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "源本無功。",
        "from": "X88n1646_015:0212b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能隨緣自在者。",
        "from": "X88n1646_015:0212b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此毗盧遮那也。",
        "from": "X88n1646_015:0212b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以本性為先。",
        "from": "X88n1646_015:0212b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智隨根應。",
        "from": "X88n1646_015:0212b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲濟物。",
        "from": "X88n1646_015:0212b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此為名。",
        "from": "X88n1646_015:0212b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依本如是。",
        "from": "X88n1646_015:0212b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設其教澤。",
        "from": "X88n1646_015:0212b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滂流法界。",
        "from": "X88n1646_015:0212b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以潤含生。",
        "from": "X88n1646_015:0212b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是寄位四天。",
        "from": "X88n1646_015:0212b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示形八相。",
        "from": "X88n1646_015:0212b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提場內現蘭若以始成。",
        "from": "X88n1646_015:0212b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普光法堂處報身之大宅。",
        "from": "X88n1646_015:0212b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢長者舉果德於藏身。",
        "from": "X88n1646_015:0212b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊小男創啟蒙於金色。",
        "from": "X88n1646_015:0212b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以海印三昧周法界而降靈。",
        "from": "X88n1646_015:0212b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用普眼法門覩塵中之剎海。",
        "from": "X88n1646_015:0212b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依正二報身土交參。",
        "from": "X88n1646_015:0212b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果兩門體用相徹。",
        "from": "X88n1646_015:0212b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以釋天之寶網。",
        "from": "X88n1646_015:0212b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彰十剎之重重。",
        "from": "X88n1646_015:0212b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取離垢之摩尼。",
        "from": "X88n1646_015:0212b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明十身而隱隱。",
        "from": "X88n1646_015:0212b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊剎境自他不隔於毫端。",
        "from": "X88n1646_015:0212b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十世古今始終不離於當念。",
        "from": "X88n1646_015:0212b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為廣也。",
        "from": "X88n1646_015:0212b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以虗空而為量。",
        "from": "X88n1646_015:0212b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為小也。",
        "from": "X88n1646_015:0212b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處極微而無迹。",
        "from": "X88n1646_015:0212b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方無卷即小相而匪虧。",
        "from": "X88n1646_015:0212b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纖塵不舒含十方而非礙。",
        "from": "X88n1646_015:0212b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於智海果德顯殊分於五位之門。",
        "from": "X88n1646_015:0212b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住法堂示進修於九天之上。",
        "from": "X88n1646_015:0212b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方如是十剎同然。",
        "from": "X88n1646_015:0212b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾如雲。",
        "from": "X88n1646_015:0212b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海會相入。",
        "from": "X88n1646_015:0212b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智凡不礙。",
        "from": "X88n1646_015:0212b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀多鏡以納眾形。",
        "from": "X88n1646_015:0212b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼此無妨。",
        "from": "X88n1646_015:0212b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若千燈而共一室。",
        "from": "X88n1646_015:0212b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論中大要明眾生性即諸佛性。",
        "from": "X88n1646_015:0212b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷即為凡。",
        "from": "X88n1646_015:0212b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟即是佛。",
        "from": "X88n1646_015:0212b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但能信入。",
        "from": "X88n1646_015:0212b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從始發心。",
        "from": "X88n1646_015:0212b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊理。",
        "from": "X88n1646_015:0212b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢行。",
        "from": "X88n1646_015:0212b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時頓印。",
        "from": "X88n1646_015:0212b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如將寶位直授凡庸。",
        "from": "X88n1646_015:0212b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回觀世間如夜夢千秋。",
        "from": "X88n1646_015:0212b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺已隨滅。",
        "from": "X88n1646_015:0212b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故其明十種發心云。",
        "from": "X88n1646_015:0212b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢首品中從凡夫位以信為首。",
        "from": "X88n1646_015:0212b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定取佛大菩提。",
        "from": "X88n1646_015:0212b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故從凡夫地信十方諸佛心不動智與自心無異智故只為無明所迷故無明與十方諸佛心本來無二故。",
        "from": "X88n1646_015:0212b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡夫地信十方諸佛身根本智與自身無異故。",
        "from": "X88n1646_015:0212c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是一法性身。",
        "from": "X88n1646_015:0212c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一根本智。",
        "from": "X88n1646_015:0212c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如樹株一根多生枝葉等。",
        "from": "X88n1646_015:0212c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以因緣故一樹株上成壞不同。",
        "from": "X88n1646_015:0212c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故從凡夫地信如來十住十行十迴向十地我悉盡能行之。",
        "from": "X88n1646_015:0212c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自憶無始時來波流苦海無益之事尚以行之。",
        "from": "X88n1646_015:0212c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況如今菩薩萬行濟眾生事豈不能為。",
        "from": "X88n1646_015:0212c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡夫地信十方諸佛皆從三昧生。",
        "from": "X88n1646_015:0212c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦當得。",
        "from": "X88n1646_015:0212c08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛三昧皆從如來自性方便生。",
        "from": "X88n1646_015:0212c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦具有如來自體清淨之性。",
        "from": "X88n1646_015:0212c09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與佛平等。",
        "from": "X88n1646_015:0212c09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡夫地信十方佛一切神通我亦當得。",
        "from": "X88n1646_015:0212c10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛神通依真智而得。",
        "from": "X88n1646_015:0212c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我但依真性智中無有煩惱無明成智一切業亡。",
        "from": "X88n1646_015:0212c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有智慈通化自在。",
        "from": "X88n1646_015:0212c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡夫地信佛智慧。",
        "from": "X88n1646_015:0212c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦當得。",
        "from": "X88n1646_015:0212c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛悉從凡夫來故。",
        "from": "X88n1646_015:0212c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡夫地信佛大悲普覆一切。",
        "from": "X88n1646_015:0212c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦當得。",
        "from": "X88n1646_015:0212c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛大悲從大願起。",
        "from": "X88n1646_015:0212c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦如諸佛發大願故。",
        "from": "X88n1646_015:0212c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡夫地信佛自在。",
        "from": "X88n1646_015:0212c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦當得。",
        "from": "X88n1646_015:0212c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛自在於性起法門。",
        "from": "X88n1646_015:0212c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智身法身入眾生界。",
        "from": "X88n1646_015:0212c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不染色塵。",
        "from": "X88n1646_015:0212c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根自在。",
        "from": "X88n1646_015:0212c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦不離性起如來智故。",
        "from": "X88n1646_015:0212c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡夫地信自發心。",
        "from": "X88n1646_015:0212c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經無盡劫修功德行滿。",
        "from": "X88n1646_015:0212c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位齊諸佛。",
        "from": "X88n1646_015:0212c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不移一念。",
        "from": "X88n1646_015:0212c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X88n1646_015:0212c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為三世無時故。",
        "from": "X88n1646_015:0212c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是從凡夫信解始終徹佛果位。",
        "from": "X88n1646_015:0212c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所發十種信者。",
        "from": "X88n1646_015:0212c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必能決定成就十信之門。",
        "from": "X88n1646_015:0212c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於堅固之種。",
        "from": "X88n1646_015:0212c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不退轉。",
        "from": "X88n1646_015:0212c21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他所論暢演一乘義至深廣。",
        "from": "X88n1646_015:0212c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此其最切者。",
        "from": "X88n1646_015:0212c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者常冠樺皮衣麻衣。",
        "from": "X88n1646_015:0212c22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長裙博袖散腰徒跣。",
        "from": "X88n1646_015:0212c23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放曠人天。",
        "from": "X88n1646_015:0212c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靡所拘執。",
        "from": "X88n1646_015:0212c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日出龕遇山中人高會宴樂。",
        "from": "X88n1646_015:0212c24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者語之曰。",
        "from": "X88n1646_015:0212c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等好住。",
        "from": "X88n1646_015:0213a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾將歸矣。",
        "from": "X88n1646_015:0213a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾驚其去。",
        "from": "X88n1646_015:0213a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有送者至龕。",
        "from": "X88n1646_015:0213a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謝遣之。",
        "from": "X88n1646_015:0213a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夕烟雲凝布。",
        "from": "X88n1646_015:0213a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巖谷震蕩。",
        "from": "X88n1646_015:0213a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有白鶴翔空哀唳。",
        "from": "X88n1646_015:0213a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘飛走悲鳴滿山。",
        "from": "X88n1646_015:0213a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中人共往候之。",
        "from": "X88n1646_015:0213a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則已端坐示寂於龕中矣。",
        "from": "X88n1646_015:0213a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白光從頂而出。",
        "from": "X88n1646_015:0213a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上徹於天。",
        "from": "X88n1646_015:0213a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時開元十八年三月二十八日。",
        "from": "X88n1646_015:0213a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽九十有六。",
        "from": "X88n1646_015:0213a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所著華嚴論四十卷。",
        "from": "X88n1646_015:0213a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決疑論四卷。",
        "from": "X88n1646_015:0213a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略釋一卷。",
        "from": "X88n1646_015:0213a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解迷顯智成悲十明論一卷。",
        "from": "X88n1646_015:0213a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於十玄．六相．百門義海．普賢行門．華嚴觀等及諸偈讚並傳於世。",
        "from": "X88n1646_015:0213a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗教兩家咸推服焉(華嚴合論．決疑論序．賢首宗乘．清凉通傳．華嚴持驗記)。",
        "from": "X88n1646_015:0213a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_015:0213a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予讀華嚴經。",
        "from": "X88n1646_015:0213a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲悔故見狹劣闇大方不知局此幾何世。",
        "from": "X88n1646_015:0213a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而渾渾乎其無涯。",
        "from": "X88n1646_015:0213a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "郁郁乎淵淵乎無所施吾視聽也久之。",
        "from": "X88n1646_015:0213a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得李長者論。",
        "from": "X88n1646_015:0213a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紬繹之。",
        "from": "X88n1646_015:0213a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恍乎其有會焉。",
        "from": "X88n1646_015:0213a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾願生生窮遊於華藏海中。",
        "from": "X88n1646_015:0213a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其庶幾乎。",
        "from": "X88n1646_015:0213a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_015:0213a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相光中常自在。",
        "from": "X88n1646_015:0213a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者之謂矣。",
        "from": "X88n1646_015:0213a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子讀華嚴經有得輙告吾。",
        "from": "X88n1646_015:0213a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾不信也。",
        "from": "X88n1646_015:0213a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今觀傳贊。",
        "from": "X88n1646_015:0213a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知所得於經論者。",
        "from": "X88n1646_015:0213a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有以發其覆而遊於廣大高明之域。",
        "from": "X88n1646_015:0213a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口吐白光代炬。",
        "from": "X88n1646_015:0213a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說華嚴之始。",
        "from": "X88n1646_015:0213a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白光從頂而出。",
        "from": "X88n1646_015:0213a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上",
        "from": "X88n1646_015:0213a17_3",
        "context_with_next_sentence": false
    }
]