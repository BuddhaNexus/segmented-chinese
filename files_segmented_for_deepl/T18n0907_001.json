[
    {
        "source_sentence": "佛頂尊勝心破地獄轉業障出三",
        "from": "T18n0907_001:0914c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "界祕密陀羅尼",
        "from": "T18n0907_001:0914c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中天竺國三藏善無畏奉　詔譯",
        "from": "T18n0907_001:0914c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(四)名金剛鼓。",
        "from": "T18n0907_001:0914c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(二)口開舌舉震法界宮。",
        "from": "T18n0907_001:0914c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華藏諸如來出定。",
        "from": "T18n0907_001:0914c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以摧破地獄滅七遍之殃。",
        "from": "T18n0907_001:0914c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起教菩薩(善住天子也)說五字祕密。",
        "from": "T18n0907_001:0914c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執本授。",
        "from": "T18n0907_001:0914c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法布字。",
        "from": "T18n0907_001:0914c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人主頂戴乎冠中。",
        "from": "T18n0907_001:0914c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬國清泰。",
        "from": "T18n0907_001:0914c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "節度觀察。",
        "from": "T18n0907_001:0914c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旌旗上書寫真言。",
        "from": "T18n0907_001:0914c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方晏靜。",
        "from": "T18n0907_001:0915a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專城太守鎮遏總戎。",
        "from": "T18n0907_001:0915a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼓角上題字嚴警。",
        "from": "T18n0907_001:0915a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠聞妖氣潛。",
        "from": "T18n0907_001:0915a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熾盛布千里。",
        "from": "T18n0907_001:0915a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苗稼洪潤人無災疾。",
        "from": "T18n0907_001:0915a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地土神祇風恬雨順。",
        "from": "T18n0907_001:0915a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(一)瑜迦事法約有千條。",
        "from": "T18n0907_001:0915a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略述少分。",
        "from": "T18n0907_001:0915a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(三)念誦加持戰鼓上書。",
        "from": "T18n0907_001:0915a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賊軍自降一人不損焉。",
        "from": "T18n0907_001:0915a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(五)佛言。",
        "from": "T18n0907_001:0915a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字金剛部主肝。",
        "from": "T18n0907_001:0915a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑁字蓮華部主肺。",
        "from": "T18n0907_001:0915a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[卄/覽]字寶部主心。",
        "from": "T18n0907_001:0915a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唅字羯磨部主胃。",
        "from": "T18n0907_001:0915a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欠字虛空部主脾。",
        "from": "T18n0907_001:0915a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山海大地從阿字出。",
        "from": "T18n0907_001:0915a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江河萬流從鑁字出。",
        "from": "T18n0907_001:0915a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金玉珍寶日月星辰火珠光明從覽字成。",
        "from": "T18n0907_001:0915a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀五果眾花開敷因唅字結。",
        "from": "T18n0907_001:0915a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秀香美人天長養顏色滋味端正相貌福德富貴從欠字莊嚴。",
        "from": "T18n0907_001:0915a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字是東方阿閦如來。",
        "from": "T18n0907_001:0915a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑁字西方阿彌陀如來。",
        "from": "T18n0907_001:0915a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覽字是南方寶生如來。",
        "from": "T18n0907_001:0915a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唅字北方不空成就如來。",
        "from": "T18n0907_001:0915a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欠字是上方毘盧遮那大日如來。",
        "from": "T18n0907_001:0915a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字甚深空寂之體。",
        "from": "T18n0907_001:0915a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取之不可取。",
        "from": "T18n0907_001:0915a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨之不可捨。",
        "from": "T18n0907_001:0915a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬法之母。",
        "from": "T18n0907_001:0915a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大灌頂王阿字是也。",
        "from": "T18n0907_001:0915a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字是難信之法。",
        "from": "T18n0907_001:0915a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小乘律師特勿令見。",
        "from": "T18n0907_001:0915a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此本五部梵本四十萬言出。",
        "from": "T18n0907_001:0915a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那經金剛頂經採集要妙。",
        "from": "T18n0907_001:0915a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上福田。",
        "from": "T18n0907_001:0915a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯此五字真言。",
        "from": "T18n0907_001:0915a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦者所獲功德不可比量不可思議不可說也。",
        "from": "T18n0907_001:0915a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛頂經五部真言。",
        "from": "T18n0907_001:0915a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦觀照理性。",
        "from": "T18n0907_001:0915a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人獲福。",
        "from": "T18n0907_001:0915a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "骨堅體健。",
        "from": "T18n0907_001:0915a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永無災障及諸病苦。",
        "from": "T18n0907_001:0915a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝養長壽(五藏曼荼羅是五部法身)阿金剛地部一(阿字作地觀金剛座觀)鑁金剛水部二(鑁字作水觀蓮華觀)覽金剛火部三(覽字作日觀)唅金剛風部四(唅字作月觀)欠字金剛空部五(欠字作空觀)如來體性無生觀　右五部真言。",
        "from": "T18n0907_001:0915a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是一切如來無生甘露之珍漿醍醐佛性之妙藥。",
        "from": "T18n0907_001:0915a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一字入於五藏萬病不生。",
        "from": "T18n0907_001:0915a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況修日觀月觀。",
        "from": "T18n0907_001:0915a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時修得佛身空寂　五分法身義。",
        "from": "T18n0907_001:0915a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿鑁覽唅欠　右上五法身真言。",
        "from": "T18n0907_001:0915a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若日誦一遍或七遍二十一遍或四十九遍者挍量功德。",
        "from": "T18n0907_001:0915b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍福如轉藏經一百萬遍。",
        "from": "T18n0907_001:0915b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況禪寂坐入定門。",
        "from": "T18n0907_001:0915b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從阿字觀諦審分明。",
        "from": "T18n0907_001:0915b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日照空。",
        "from": "T18n0907_001:0915b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是了見佛性。",
        "from": "T18n0907_001:0915b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲福無有比量。",
        "from": "T18n0907_001:0915b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕藏文句實不思議。",
        "from": "T18n0907_001:0915b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只恐聲聞法師。",
        "from": "T18n0907_001:0915b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小乘持律者。",
        "from": "T18n0907_001:0915b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生疑不信反益其罪。",
        "from": "T18n0907_001:0915b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如王有稚子偏最憐念庫藏珍寶傾竭不惜。",
        "from": "T18n0907_001:0915b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯不與干將鏌鎁恐不解運用故傷其體。",
        "from": "T18n0907_001:0915b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故如來密傳大菩薩。",
        "from": "T18n0907_001:0915b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與聲聞劣慧。",
        "from": "T18n0907_001:0915b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已下三箇真言是三種悉地。",
        "from": "T18n0907_001:0915b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就法中立上中下品差別也。",
        "from": "T18n0907_001:0915b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿羅波遮那(此是下品悉地真言)是名出悉地。",
        "from": "T18n0907_001:0915b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能生根莖遍滿四方。",
        "from": "T18n0907_001:0915b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一遍。",
        "from": "T18n0907_001:0915b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如轉藏經一百遍。",
        "from": "T18n0907_001:0915b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿微羅[合*牛]佉(此是中品悉地真言)大日經悉地品。",
        "from": "T18n0907_001:0915b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名降伏四魔解脫六趣滿足一切智智金剛字句也。",
        "from": "T18n0907_001:0915b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名入悉地。",
        "from": "T18n0907_001:0915b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能生枝葉。",
        "from": "T18n0907_001:0915b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿四方。",
        "from": "T18n0907_001:0915b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明晃曜入佛法界。",
        "from": "T18n0907_001:0915b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名入悉地。",
        "from": "T18n0907_001:0915b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦一遍。",
        "from": "T18n0907_001:0915b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如轉藏經一千遍。",
        "from": "T18n0907_001:0915b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿鑁藍唅欠(是上品悉地真言也。",
        "from": "T18n0907_001:0915b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前五三印真言。",
        "from": "T18n0907_001:0915b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順一遍逆一遍。",
        "from": "T18n0907_001:0915b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次順旋轉四遍。",
        "from": "T18n0907_001:0915b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次逆旋轉四遍。",
        "from": "T18n0907_001:0915b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即利益一切眾生皆以悉地義也)是名祕密悉地。",
        "from": "T18n0907_001:0915b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名成就悉地。",
        "from": "T18n0907_001:0915b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名蘇悉地。",
        "from": "T18n0907_001:0915b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘇悉地者遍法界也。",
        "from": "T18n0907_001:0915b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就佛果。",
        "from": "T18n0907_001:0915b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證大菩提。",
        "from": "T18n0907_001:0915b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界祕密言。",
        "from": "T18n0907_001:0915b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明遍滿。",
        "from": "T18n0907_001:0915b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛與佛能入此門。",
        "from": "T18n0907_001:0915b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣覺聲聞不能照。",
        "from": "T18n0907_001:0915b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此亦名祕密悉地。",
        "from": "T18n0907_001:0915b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦一遍。",
        "from": "T18n0907_001:0915b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如轉藏經一百萬遍。",
        "from": "T18n0907_001:0915b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出悉地從足至腰。",
        "from": "T18n0907_001:0915b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入悉地從臍至心。",
        "from": "T18n0907_001:0915b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密悉地從心至頂。",
        "from": "T18n0907_001:0915b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三悉地。",
        "from": "T18n0907_001:0915b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出悉地化身成就。",
        "from": "T18n0907_001:0915b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入悉地報身成就。",
        "from": "T18n0907_001:0915b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密悉地蘇悉地法身成就。",
        "from": "T18n0907_001:0915b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是三種常身正法藏。",
        "from": "T18n0907_001:0915b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故稽首禮毘盧遮那佛。",
        "from": "T18n0907_001:0915b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　稽首毘盧遮那佛　　開敷淨眼如蓮華　三界調御天人師　　大菩提心救世者　深妙真言加持法　　流入無生阿字門　白毫無相正遍知　　圓滿恒照如日月　阿閦寶生救世者　　彌陀成就不空王　咸於悉地吉祥輪　　傳斯妙法化諸有　慈心自在降三世　　金剛薩埵不動尊　無違誓願應時期　　瑜伽事畢還金剛　我依毘盧遮那佛　　開心智印建標儀　無量功德普莊嚴　　同入總持諸善逝　願共有緣修學者　　安住無上清淨海佛頂尊勝心破地獄法一卷(以後雜要文也)本批云。",
        "from": "T18n0907_001:0915c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治歷二年六月一日。",
        "from": "T18n0907_001:0915c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於肥前國。",
        "from": "T18n0907_001:0915c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以但石藏聖御房本書寫畢。",
        "from": "T18n0907_001:0915c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧靜暹。",
        "from": "T18n0907_001:0915c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞和二年丙戌七月十八日。",
        "from": "T18n0907_001:0915c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自金剛王院僧正御房御手下賜之畢。",
        "from": "T18n0907_001:0915c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權少僧都文海(五十四歲)。",
        "from": "T18n0907_001:0915c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天明元年辛丑閏七月十七日。",
        "from": "T18n0907_001:0915c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以宇治慧心院藏。",
        "from": "T18n0907_001:0915c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本寫得訖。",
        "from": "T18n0907_001:0915c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈忍八家祕錄云。",
        "from": "T18n0907_001:0915c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊勝破地獄陀羅尼儀軌一卷(是三種悉地法)應知所明法未顯題額。",
        "from": "T18n0907_001:0915c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故有此註記。",
        "from": "T18n0907_001:0915c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是此本乎。",
        "from": "T18n0907_001:0915c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時享和改元秋七月挍以上木。",
        "from": "T18n0907_001:0915c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　豐山輪下快道誌",
        "from": "T18n0907_001:0915c25_0",
        "context_with_next_sentence": false
    }
]