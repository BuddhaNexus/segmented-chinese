[
    {
        "source_sentence": "居士傳三十九",
        "from": "X88n1646_039:0251b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙大洲傳",
        "from": "X88n1646_039:0251b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙大洲。",
        "from": "X88n1646_039:0251b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名貞吉。",
        "from": "X88n1646_039:0251b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字孟靜。",
        "from": "X88n1646_039:0251b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四川內江人也。",
        "from": "X88n1646_039:0251b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母余氏。",
        "from": "X88n1646_039:0251b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢二小沙彌。",
        "from": "X88n1646_039:0251b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一衣緇。",
        "from": "X88n1646_039:0251b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一衣白。",
        "from": "X88n1646_039:0251b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牽衣求托處。",
        "from": "X88n1646_039:0251b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緇者先執母袂不脫。",
        "from": "X88n1646_039:0251b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而大洲生。",
        "from": "X88n1646_039:0251b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而白者復來。",
        "from": "X88n1646_039:0251b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而小洲生。",
        "from": "X88n1646_039:0251b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小洲名蒙吉。",
        "from": "X88n1646_039:0251b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字仲通。",
        "from": "X88n1646_039:0251b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩人即三四歲時相愛也。",
        "from": "X88n1646_039:0251b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每相引入坡谷僻處趺坐。",
        "from": "X88n1646_039:0251b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抵掌語。",
        "from": "X88n1646_039:0251b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞人聲斂容默然。",
        "from": "X88n1646_039:0251b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或密聽之。",
        "from": "X88n1646_039:0251b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不辨也。",
        "from": "X88n1646_039:0251b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詰之。",
        "from": "X88n1646_039:0251b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不告也。",
        "from": "X88n1646_039:0251b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少長並博通群書。",
        "from": "X88n1646_039:0251b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲年二十學禪。",
        "from": "X88n1646_039:0251b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時與小洲閉戶習靜。",
        "from": "X88n1646_039:0251b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既居母喪。",
        "from": "X88n1646_039:0251b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟哀而不傷之體。",
        "from": "X88n1646_039:0251b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩人先後中鄉舉。",
        "from": "X88n1646_039:0251b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及大洲成進士。",
        "from": "X88n1646_039:0251b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小洲遂不復應試。",
        "from": "X88n1646_039:0251b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明世宗朝大洲官翰林。",
        "from": "X88n1646_039:0251b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與四方豪傑講習。",
        "from": "X88n1646_039:0251b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓摧俗學。",
        "from": "X88n1646_039:0251b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發明本心。",
        "from": "X88n1646_039:0251b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天下為己任。",
        "from": "X88n1646_039:0251c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著求放心齋銘云。",
        "from": "X88n1646_039:0251c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾為吾健。",
        "from": "X88n1646_039:0251c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坤為吾順。",
        "from": "X88n1646_039:0251c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風行水流。",
        "from": "X88n1646_039:0251c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日麗澤潤。",
        "from": "X88n1646_039:0251c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動處為雷。",
        "from": "X88n1646_039:0251c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止處為山。",
        "from": "X88n1646_039:0251c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無聲無臭。",
        "from": "X88n1646_039:0251c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充滿兩間。",
        "from": "X88n1646_039:0251c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名為心。",
        "from": "X88n1646_039:0251c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別名為仁。",
        "from": "X88n1646_039:0251c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無內無外。",
        "from": "X88n1646_039:0251c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無損無增。",
        "from": "X88n1646_039:0251c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自孝自弟。",
        "from": "X88n1646_039:0251c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自聰自明。",
        "from": "X88n1646_039:0251c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜怒哀樂。",
        "from": "X88n1646_039:0251c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有一物。",
        "from": "X88n1646_039:0251c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感而遂通天下之故。",
        "from": "X88n1646_039:0251c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情無情。",
        "from": "X88n1646_039:0251c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "X88n1646_039:0251c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未著軀殻。",
        "from": "X88n1646_039:0251c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只有此耳。",
        "from": "X88n1646_039:0251c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人以此洗而退藏。",
        "from": "X88n1646_039:0251c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟有圓圈可以形容。",
        "from": "X88n1646_039:0251c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏中何有。",
        "from": "X88n1646_039:0251c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圈中何名。",
        "from": "X88n1646_039:0251c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至精至一。",
        "from": "X88n1646_039:0251c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為天地心。",
        "from": "X88n1646_039:0251c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "原此真心不分愚智。",
        "from": "X88n1646_039:0251c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魚躍鳶飛各適其職。",
        "from": "X88n1646_039:0251c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙蒙我生。",
        "from": "X88n1646_039:0251c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "營營自戕。",
        "from": "X88n1646_039:0251c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自斵自喪。",
        "from": "X88n1646_039:0251c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自迷自狂。",
        "from": "X88n1646_039:0251c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自築其墻。",
        "from": "X88n1646_039:0251c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自錮其防。",
        "from": "X88n1646_039:0251c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自放於憂悲愴逸鄙吝貪妬之場而不悟其非真常也。",
        "from": "X88n1646_039:0251c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1646_039:0251c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此獨何心往而不復。",
        "from": "X88n1646_039:0251c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜半一聲天心呈露。",
        "from": "X88n1646_039:0251c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢後周公。",
        "from": "X88n1646_039:0251c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廟中西伯。",
        "from": "X88n1646_039:0251c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元酒大羮。",
        "from": "X88n1646_039:0251c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泊然無迹。",
        "from": "X88n1646_039:0251c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟彼淵泉。",
        "from": "X88n1646_039:0251c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今見涓涓。",
        "from": "X88n1646_039:0251c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟彼大莖。",
        "from": "X88n1646_039:0251c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今見萌根。",
        "from": "X88n1646_039:0251c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無象之象。",
        "from": "X88n1646_039:0251c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無形之形。",
        "from": "X88n1646_039:0251c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根滋莖大。",
        "from": "X88n1646_039:0251c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水到渠成。",
        "from": "X88n1646_039:0251c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時翕聚萬古常靈。",
        "from": "X88n1646_039:0251c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1646_039:0251c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易悟者心。",
        "from": "X88n1646_039:0251c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難淨者習。",
        "from": "X88n1646_039:0251c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼為習呼。",
        "from": "X88n1646_039:0251c15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吸為習吸。",
        "from": "X88n1646_039:0251c15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習心作主。",
        "from": "X88n1646_039:0251c15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾不離。",
        "from": "X88n1646_039:0251c15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟彼家室。",
        "from": "X88n1646_039:0251c15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見奪於賊。",
        "from": "X88n1646_039:0251c16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退處奴隸。",
        "from": "X88n1646_039:0251c16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僕僕受役。",
        "from": "X88n1646_039:0251c16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反正之苦。",
        "from": "X88n1646_039:0251c16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禹平水土。",
        "from": "X88n1646_039:0251c16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涵養之力。",
        "from": "X88n1646_039:0251c17_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稷藝稼穡。",
        "from": "X88n1646_039:0251c17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是一念不起。",
        "from": "X88n1646_039:0251c17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境不觸也。",
        "from": "X88n1646_039:0251c17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一見不倚。",
        "from": "X88n1646_039:0251c17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微不忽也。",
        "from": "X88n1646_039:0251c18_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離繩縛。",
        "from": "X88n1646_039:0251c18_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自解脫也。",
        "from": "X88n1646_039:0251c18_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不絕思慮。",
        "from": "X88n1646_039:0251c18_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自澄寂也。",
        "from": "X88n1646_039:0251c18_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我視天地萬物。",
        "from": "X88n1646_039:0251c19_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有我也。",
        "from": "X88n1646_039:0251c19_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天地萬物視我。",
        "from": "X88n1646_039:0251c19_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有天地萬物也。",
        "from": "X88n1646_039:0251c20_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翼乎如鴻毛之遇順風。",
        "from": "X88n1646_039:0251c20_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浩乎如巨魚之縱大壑也。",
        "from": "X88n1646_039:0251c20_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而不能無過也。",
        "from": "X88n1646_039:0251c21_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫不能無過者。",
        "from": "X88n1646_039:0251c21_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習難淨。",
        "from": "X88n1646_039:0251c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自能改過者。",
        "from": "X88n1646_039:0251c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性自定也。",
        "from": "X88n1646_039:0251c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後求為真求。",
        "from": "X88n1646_039:0251c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放而不放。",
        "from": "X88n1646_039:0251c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真悟真修。",
        "from": "X88n1646_039:0251c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後徹朗。",
        "from": "X88n1646_039:0251c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚非為下。",
        "from": "X88n1646_039:0251c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智非為上。",
        "from": "X88n1646_039:0251c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回也從事。",
        "from": "X88n1646_039:0251c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參乎免夫。",
        "from": "X88n1646_039:0251c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先立其大。",
        "from": "X88n1646_039:0251c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白首著書太山。",
        "from": "X88n1646_039:0251c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巖巖示我廣居。",
        "from": "X88n1646_039:0251c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學問無他。",
        "from": "X88n1646_039:0252a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了此而已。",
        "from": "X88n1646_039:0252a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實際其地庶為知耻。",
        "from": "X88n1646_039:0252a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銘於東西。",
        "from": "X88n1646_039:0252a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢告同志。",
        "from": "X88n1646_039:0252a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累遷中允掌司業事。",
        "from": "X88n1646_039:0252a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉靖二十九年俺答犯都城。",
        "from": "X88n1646_039:0252a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嫚書要貢。",
        "from": "X88n1646_039:0252a03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔百官廷議。",
        "from": "X88n1646_039:0252a03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日中莫發一語。",
        "from": "X88n1646_039:0252a03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲奮然出班曰。",
        "from": "X88n1646_039:0252a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城下之盟。",
        "from": "X88n1646_039:0252a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春秋耻之。",
        "from": "X88n1646_039:0252a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為今之計。",
        "from": "X88n1646_039:0252a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請上速御正殿。",
        "from": "X88n1646_039:0252a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下詔引咎。",
        "from": "X88n1646_039:0252a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錄周尚文之功。",
        "from": "X88n1646_039:0252a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋沈東於獄。",
        "from": "X88n1646_039:0252a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕損軍之令。",
        "from": "X88n1646_039:0252a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重賞功之格。",
        "from": "X88n1646_039:0252a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飭文武百司城守。",
        "from": "X88n1646_039:0252a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣官宣諭諸將。",
        "from": "X88n1646_039:0252a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "監督力戰。",
        "from": "X88n1646_039:0252a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退敵易耳。",
        "from": "X88n1646_039:0252a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先是周尚文為大同總兵。",
        "from": "X88n1646_039:0252a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力戰敗俺。",
        "from": "X88n1646_039:0252a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答既卒。",
        "from": "X88n1646_039:0252a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大學士嚴嵩格卹典不予。",
        "from": "X88n1646_039:0252a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "給事中沈束以為言。",
        "from": "X88n1646_039:0252a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復下之獄。",
        "from": "X88n1646_039:0252a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故大洲及之。",
        "from": "X88n1646_039:0252a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時世宗遣中使瞰廷臣還報。",
        "from": "X88n1646_039:0252a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心壯其言。",
        "from": "X88n1646_039:0252a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令手疏便宜。",
        "from": "X88n1646_039:0252a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立擢為左諭德兼監察御史。",
        "from": "X88n1646_039:0252a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令齎金五萬犒軍。",
        "from": "X88n1646_039:0252a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴嵩心嫉之。",
        "from": "X88n1646_039:0252a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當撰敕。",
        "from": "X88n1646_039:0252a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令督戰。",
        "from": "X88n1646_039:0252a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與一卒護行。",
        "from": "X88n1646_039:0252a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時宼騎充斥。",
        "from": "X88n1646_039:0252a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲單騎馳入諸將營。",
        "from": "X88n1646_039:0252a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散金犒士。",
        "from": "X88n1646_039:0252a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會宼引出。",
        "from": "X88n1646_039:0252a13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將出白羊口。",
        "from": "X88n1646_039:0252a13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲為仇鸞設畫。",
        "from": "X88n1646_039:0252a13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂賊輕重甚多。",
        "from": "X88n1646_039:0252a14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白羊路險。",
        "from": "X88n1646_039:0252a14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以奇兵趨出賊前。",
        "from": "X88n1646_039:0252a14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令賊回尋古北口故道。",
        "from": "X88n1646_039:0252a15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以全軍擊之。",
        "from": "X88n1646_039:0252a15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可大克也。",
        "from": "X88n1646_039:0252a15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鸞不能用。",
        "from": "X88n1646_039:0252a16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾之。",
        "from": "X88n1646_039:0252a16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反為賊敗。",
        "from": "X88n1646_039:0252a16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既復命嚴嵩。",
        "from": "X88n1646_039:0252a16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復讒之。",
        "from": "X88n1646_039:0252a16_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世宗怒其為尚文束游說。",
        "from": "X88n1646_039:0252a17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下之獄。",
        "from": "X88n1646_039:0252a17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杖於廷。",
        "from": "X88n1646_039:0252a17_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謫茘波典史。",
        "from": "X88n1646_039:0252a17_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稍遷至南京吏部主事。",
        "from": "X88n1646_039:0252a18_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四十年召為戶部侍郎。",
        "from": "X88n1646_039:0252a18_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以忤嵩罷。",
        "from": "X88n1646_039:0252a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穆宗即位。",
        "from": "X88n1646_039:0252a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起禮部右侍郎。",
        "from": "X88n1646_039:0252a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充日講官。",
        "from": "X88n1646_039:0252a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每進講。",
        "from": "X88n1646_039:0252a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開陳心學究極存亡得失之幾。",
        "from": "X88n1646_039:0252a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穆宗甚重之。",
        "from": "X88n1646_039:0252a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷南京禮部尚書。",
        "from": "X88n1646_039:0252a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既行。",
        "from": "X88n1646_039:0252a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復召還。",
        "from": "X88n1646_039:0252a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留直講兼翰林學士。",
        "from": "X88n1646_039:0252a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教習庶吉士課讀楞嚴經。",
        "from": "X88n1646_039:0252a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂曰。",
        "from": "X88n1646_039:0252a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸君齒亦長矣。",
        "from": "X88n1646_039:0252a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以此時讀此經。",
        "from": "X88n1646_039:0252a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更何待耶。",
        "from": "X88n1646_039:0252a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三年秋命兼文淵閣大學士。",
        "from": "X88n1646_039:0252a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參預機務。",
        "from": "X88n1646_039:0252a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與高拱共事。",
        "from": "X88n1646_039:0252a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "議論多不合拱。",
        "from": "X88n1646_039:0252a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以私怨考察科道。",
        "from": "X88n1646_039:0252a24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲疏言之。",
        "from": "X88n1646_039:0252b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拱益不悅。",
        "from": "X88n1646_039:0252b01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諷言官劾大洲。",
        "from": "X88n1646_039:0252b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲疏辨。",
        "from": "X88n1646_039:0252b01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂致仕去居位。",
        "from": "X88n1646_039:0252b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止一載。",
        "from": "X88n1646_039:0252b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚著書。",
        "from": "X88n1646_039:0252b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號二通。",
        "from": "X88n1646_039:0252b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰經世通。",
        "from": "X88n1646_039:0252b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰出世通。",
        "from": "X88n1646_039:0252b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通各二門。",
        "from": "X88n1646_039:0252b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門各為部。",
        "from": "X88n1646_039:0252b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既成。",
        "from": "X88n1646_039:0252b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為文告古佛聖賢之神曰。",
        "from": "X88n1646_039:0252b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞吉夙生遇緣。",
        "from": "X88n1646_039:0252b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸染真熏。",
        "from": "X88n1646_039:0252b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今出頭來。",
        "from": "X88n1646_039:0252b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不忘覺照。",
        "from": "X88n1646_039:0252b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身居臣子之地。",
        "from": "X88n1646_039:0252b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每懷經世之憂。",
        "from": "X88n1646_039:0252b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心慕道德之途。",
        "from": "X88n1646_039:0252b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時發出世之願。",
        "from": "X88n1646_039:0252b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此展轉四十餘年。",
        "from": "X88n1646_039:0252b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邇來垂白謝事。",
        "from": "X88n1646_039:0252b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形志俱衰。",
        "from": "X88n1646_039:0252b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顧影枯殘。",
        "from": "X88n1646_039:0252b07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽生勇猛。",
        "from": "X88n1646_039:0252b07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃取架上舊書以類臚列。",
        "from": "X88n1646_039:0252b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨文布點。",
        "from": "X88n1646_039:0252b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各就部曲。",
        "from": "X88n1646_039:0252b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰統。",
        "from": "X88n1646_039:0252b08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰傳。",
        "from": "X88n1646_039:0252b08_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰制。",
        "from": "X88n1646_039:0252b08_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰志。",
        "from": "X88n1646_039:0252b08_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬之史門。",
        "from": "X88n1646_039:0252b08_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "申治理也。",
        "from": "X88n1646_039:0252b09_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰典。",
        "from": "X88n1646_039:0252b09_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰行。",
        "from": "X88n1646_039:0252b09_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰藝。",
        "from": "X88n1646_039:0252b09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰術。",
        "from": "X88n1646_039:0252b09_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬之業門。",
        "from": "X88n1646_039:0252b09_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明學術也。",
        "from": "X88n1646_039:0252b09_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫學術必助於治理。",
        "from": "X88n1646_039:0252b10_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治理必原於學術。",
        "from": "X88n1646_039:0252b10_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二門通矣。",
        "from": "X88n1646_039:0252b10_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世可經矣。",
        "from": "X88n1646_039:0252b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題曰內篇。",
        "from": "X88n1646_039:0252b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取東土金經摘采要文。",
        "from": "X88n1646_039:0252b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以便修習。",
        "from": "X88n1646_039:0252b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰經。",
        "from": "X88n1646_039:0252b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰律。",
        "from": "X88n1646_039:0252b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰論。",
        "from": "X88n1646_039:0252b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬之說門。",
        "from": "X88n1646_039:0252b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大智三昧所自出也。",
        "from": "X88n1646_039:0252b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰單傳直指。",
        "from": "X88n1646_039:0252b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬之宗門。",
        "from": "X88n1646_039:0252b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大行三昧所自出也。",
        "from": "X88n1646_039:0252b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫行智二嚴。",
        "from": "X88n1646_039:0252b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如震輪兩足。",
        "from": "X88n1646_039:0252b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闕一不可。",
        "from": "X88n1646_039:0252b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二門通矣。",
        "from": "X88n1646_039:0252b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世可出矣。",
        "from": "X88n1646_039:0252b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題曰外篇。",
        "from": "X88n1646_039:0252b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約要而言。",
        "from": "X88n1646_039:0252b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經世者不礙於出世之體。",
        "from": "X88n1646_039:0252b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出世者不忘乎經世之用。",
        "from": "X88n1646_039:0252b15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後千聖一心。",
        "from": "X88n1646_039:0252b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬世一道。",
        "from": "X88n1646_039:0252b16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人憂世之念可少慰矣。",
        "from": "X88n1646_039:0252b16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1646_039:0252b17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗空有盡。",
        "from": "X88n1646_039:0252b17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此願無窮。",
        "from": "X88n1646_039:0252b17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫石可消。",
        "from": "X88n1646_039:0252b17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯言常在。",
        "from": "X88n1646_039:0252b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯神其鑒之。",
        "from": "X88n1646_039:0252b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬歷十年卒。",
        "from": "X88n1646_039:0252b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年七十三。",
        "from": "X88n1646_039:0252b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈少保。",
        "from": "X88n1646_039:0252b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡文肅。",
        "from": "X88n1646_039:0252b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小洲甞被薦出為國子監學。",
        "from": "X88n1646_039:0252b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正一月即謝事。",
        "from": "X88n1646_039:0252b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨大洲歸。",
        "from": "X88n1646_039:0252b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自陳其所證。",
        "from": "X88n1646_039:0252b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲喜為作悟道詩。",
        "from": "X88n1646_039:0252b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先大洲卒(大洲文集．明史)。",
        "from": "X88n1646_039:0252b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_039:0252b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自唐以來。",
        "from": "X88n1646_039:0252b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學士大夫儒佛之辨齗齗如也。",
        "from": "X88n1646_039:0252b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲先生作而兩家之難通。",
        "from": "X88n1646_039:0252b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非深入夫不二之門者。",
        "from": "X88n1646_039:0252b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡足以與於斯哉。",
        "from": "X88n1646_039:0252b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先生與友人書言。",
        "from": "X88n1646_039:0252b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近得李長者華嚴合論。",
        "from": "X88n1646_039:0252b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服之。",
        "from": "X88n1646_039:0252c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擬以衰殘身命供奉法界。",
        "from": "X88n1646_039:0252c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持二通之作。",
        "from": "X88n1646_039:0252c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖將游戲乎毗盧性海中也。",
        "from": "X88n1646_039:0252c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1646_039:0252c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先生丈夫之雄哉。",
        "from": "X88n1646_039:0252c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_039:0252c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大洲先生與龍湖紫栢皆以英雄而入道者。",
        "from": "X88n1646_039:0252c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道愈深。",
        "from": "X88n1646_039:0252c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我相愈重了。",
        "from": "X88n1646_039:0252c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王摩詰．蘇東坡．黃山谷俱以名士而入道者。",
        "from": "X88n1646_039:0252c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道愈深。",
        "from": "X88n1646_039:0252c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我相愈有趣了。",
        "from": "X88n1646_039:0252c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則與不學道者何以分別。",
        "from": "X88n1646_039:0252c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰大洲三人學道。",
        "from": "X88n1646_039:0252c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三人我相是雄的。",
        "from": "X88n1646_039:0252c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不學道者。",
        "from": "X88n1646_039:0252c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我相是雌的。",
        "from": "X88n1646_039:0252c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王摩詰三人學道。",
        "from": "X88n1646_039:0252c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王的我相香。",
        "from": "X88n1646_039:0252c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘇的我相活。",
        "from": "X88n1646_039:0252c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃的我相瘦。",
        "from": "X88n1646_039:0252c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不學道。",
        "from": "X88n1646_039:0252c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我相便是臭的死的肥的。",
        "from": "X88n1646_039:0252c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善學道者不要強做著無我。",
        "from": "X88n1646_039:0252c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只要在我相上著工夫。",
        "from": "X88n1646_039:0252c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我相雌的可厭。",
        "from": "X88n1646_039:0252c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要修得他雄起來。",
        "from": "X88n1646_039:0252c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臭的可厭。",
        "from": "X88n1646_039:0252c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要修得他香起來。",
        "from": "X88n1646_039:0252c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死的可厭。",
        "from": "X88n1646_039:0252c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要修得他活起來。",
        "from": "X88n1646_039:0252c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肥的可厭。",
        "from": "X88n1646_039:0252c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要修得他瘦起來。",
        "from": "X88n1646_039:0252c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是漸門。",
        "from": "X88n1646_039:0252c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倘遇性急的朋友。",
        "from": "X88n1646_039:0252c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要請教我如何是頓門。",
        "from": "X88n1646_039:0252c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我便對他道。",
        "from": "X88n1646_039:0252c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為學只要了我相耳。",
        "from": "X88n1646_039:0252c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我相不除。",
        "from": "X88n1646_039:0252c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禍事不小。",
        "from": "X88n1646_039:0252c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然又急切除不得。",
        "from": "X88n1646_039:0252c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "做工夫到得這裏。",
        "from": "X88n1646_039:0252c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十分著急。",
        "from": "X88n1646_039:0252c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不妨回轉頭。",
        "from": "X88n1646_039:0252c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將這我相做親人看待。",
        "from": "X88n1646_039:0252c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極力的覔這我相。",
        "from": "X88n1646_039:0252c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覔來覔去。",
        "from": "X88n1646_039:0252c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要覔他來見一面。",
        "from": "X88n1646_039:0252c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覔到一面也不得見。",
        "from": "X88n1646_039:0252c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這便是頓門。",
        "from": "X88n1646_039:0252c19_7",
        "context_with_next_sentence": false
    }
]