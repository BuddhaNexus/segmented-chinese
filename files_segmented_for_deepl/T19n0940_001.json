[
    {
        "source_sentence": "佛說帝釋巖祕密成就儀軌",
        "from": "T19n0940_001:0095c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試鴻臚卿",
        "from": "T19n0940_001:0095c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T19n0940_001:0095c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦牟尼佛。",
        "from": "T19n0940_001:0095c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手大祕密主菩薩言。",
        "from": "T19n0940_001:0095c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今當知摩伽陀國菴沒羅聚落北韋提希山。",
        "from": "T19n0940_001:0095c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有帝釋巖。",
        "from": "T19n0940_001:0095c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼巖中有九十九宮。",
        "from": "T19n0940_001:0095c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一俱胝大菩薩眾。",
        "from": "T19n0940_001:0095c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並天龍八部諸神仙等安止其中。",
        "from": "T19n0940_001:0095c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩今現在彼入三摩地。",
        "from": "T19n0940_001:0095c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名最上莊嚴。",
        "from": "T19n0940_001:0095c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從定出已說法教化諸菩薩眾。",
        "from": "T19n0940_001:0095c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手此帝釋巖最上殊勝。",
        "from": "T19n0940_001:0095c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸佛神通變化。",
        "from": "T19n0940_001:0095c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非諸小智所能測度。",
        "from": "T19n0940_001:0095c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不可思議相應法門。",
        "from": "T19n0940_001:0095c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩居處其中。",
        "from": "T19n0940_001:0095c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有種種成就相應聖法世間。",
        "from": "T19n0940_001:0095c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有起決定心求趣菩提。",
        "from": "T19n0940_001:0095c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無數劫勤修眾行不怖長時者。",
        "from": "T19n0940_001:0095c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方為宣說此帝釋巖諸成就法。",
        "from": "T19n0940_001:0095c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人離貪瞋癡及我見相。",
        "from": "T19n0940_001:0095c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏諸根起淨信心依佛正教者。",
        "from": "T19n0940_001:0095c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃為宣說。",
        "from": "T19n0940_001:0095c21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人造諸惡業。",
        "from": "T19n0940_001:0095c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生菩提種遠離正法。",
        "from": "T19n0940_001:0095c22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信因果毀謗阿闍梨。",
        "from": "T19n0940_001:0095c22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不孝父母者汝勿為說。",
        "from": "T19n0940_001:0095c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時大祕密主金剛手菩薩。",
        "from": "T19n0940_001:0095c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T19n0940_001:0095c24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說有大功德。",
        "from": "T19n0940_001:0095c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大方便不以加行。",
        "from": "T19n0940_001:0095c25_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於現生中得見慈氏菩薩。",
        "from": "T19n0940_001:0095c25_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今樂聞願佛為說。",
        "from": "T19n0940_001:0095c26_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告大祕密主金剛手菩薩言。",
        "from": "T19n0940_001:0095c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝如實宣說。",
        "from": "T19n0940_001:0095c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手若有諸修相應行人。",
        "from": "T19n0940_001:0095c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂欲入彼帝釋巖中。",
        "from": "T19n0940_001:0095c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以加行於現生中求見慈氏菩薩。",
        "from": "T19n0940_001:0095c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復樂求聖劍聖輪如意寶教法。",
        "from": "T19n0940_001:0096a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖藥安繕那藥播耨迦聖莊嚴。",
        "from": "T19n0940_001:0096a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具如是等成就法者。",
        "from": "T19n0940_001:0096a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其行人先須於阿闍梨所。",
        "from": "T19n0940_001:0096a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起信敬心依法傳受。",
        "from": "T19n0940_001:0096a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後求自本尊威神加護。",
        "from": "T19n0940_001:0096a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大供養諸佛如來。",
        "from": "T19n0940_001:0096a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為眾生作大布施已。",
        "from": "T19n0940_001:0096a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當面東行十弓量。",
        "from": "T19n0940_001:0096a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後面西復行三十弓量。",
        "from": "T19n0940_001:0096a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方入一宮。",
        "from": "T19n0940_001:0096a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其狀四方具其窓牖。",
        "from": "T19n0940_001:0096a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即時於窓牖中。",
        "from": "T19n0940_001:0096a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀見種種樹木。",
        "from": "T19n0940_001:0096a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其樹皆是聖藥。",
        "from": "T19n0940_001:0096a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復見地居世界宮殿。",
        "from": "T19n0940_001:0096a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人於彼止息少時。",
        "from": "T19n0940_001:0096a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去此不遠即見一井。",
        "from": "T19n0940_001:0096a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其井深可人半身量。",
        "from": "T19n0940_001:0096a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有鐵索人所執持以為梯級。",
        "from": "T19n0940_001:0096a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即堅持此索。",
        "from": "T19n0940_001:0096a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下行二肘量即至平地。",
        "from": "T19n0940_001:0096a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當以手捫摸其地。",
        "from": "T19n0940_001:0096a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸次得見一階道。",
        "from": "T19n0940_001:0096a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人履此而下。",
        "from": "T19n0940_001:0096a13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次見菴沒羅樹。",
        "from": "T19n0940_001:0096a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其樹有果狀如尾螺。",
        "from": "T19n0940_001:0096a14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當取一果持以出外而食。",
        "from": "T19n0940_001:0096a14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食已即得延壽一劫如那羅延天。",
        "from": "T19n0940_001:0096a15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相好端嚴有大力勢。",
        "from": "T19n0940_001:0096a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞持具足了諸佛法。",
        "from": "T19n0940_001:0096a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行人不取此果。",
        "from": "T19n0940_001:0096a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即復行一百弓量。",
        "from": "T19n0940_001:0096a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見大自在天宮。",
        "from": "T19n0940_001:0096a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼宮前有一大池聖藥充滿。",
        "from": "T19n0940_001:0096a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此池以北有大多羅樹。",
        "from": "T19n0940_001:0096a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即於彼樹。",
        "from": "T19n0940_001:0096a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取一果出外而食。",
        "from": "T19n0940_001:0096a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得延壽一劫。",
        "from": "T19n0940_001:0096a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人若不樂取此果。",
        "from": "T19n0940_001:0096a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於池中取一聖藥。",
        "from": "T19n0940_001:0096a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持以出外。",
        "from": "T19n0940_001:0096a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所觸物皆得成金。",
        "from": "T19n0940_001:0096a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人若復不樂取此聖藥。",
        "from": "T19n0940_001:0096a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於彼天宮四側。",
        "from": "T19n0940_001:0096a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取一訶梨勒出外而食。",
        "from": "T19n0940_001:0096a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得延壽一劫。",
        "from": "T19n0940_001:0096a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後離彼天宮。",
        "from": "T19n0940_001:0096a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於南北見有二道。",
        "from": "T19n0940_001:0096a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼南路即不得往。",
        "from": "T19n0940_001:0096a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當行北路。",
        "from": "T19n0940_001:0096a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去此不遠見一銅城。",
        "from": "T19n0940_001:0096a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其城高廣。",
        "from": "T19n0940_001:0096a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當擊彼城門。",
        "from": "T19n0940_001:0096a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有摩登伽女為開其門。",
        "from": "T19n0940_001:0096a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入已即見二道。",
        "from": "T19n0940_001:0096a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼左邊道有一大樹其名無憂。",
        "from": "T19n0940_001:0096a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼樹下有眾多摩登伽女。",
        "from": "T19n0940_001:0096a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四向遊戲。",
        "from": "T19n0940_001:0096a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼眾多女即為行人指右邊道。",
        "from": "T19n0940_001:0096a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即向右邊。",
        "from": "T19n0940_001:0096b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行一由旬。",
        "from": "T19n0940_001:0096b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡眼所觀道。",
        "from": "T19n0940_001:0096b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠見一銀城。",
        "from": "T19n0940_001:0096b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其城高廣門皆扃鑰。",
        "from": "T19n0940_001:0096b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有門鉤其狀如蛇置諸門側。",
        "from": "T19n0940_001:0096b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人見已勿生怖畏。",
        "from": "T19n0940_001:0096b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取一鉤自開其門。",
        "from": "T19n0940_001:0096b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入已初見聖劍。",
        "from": "T19n0940_001:0096b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人若欲取時即取其劍。",
        "from": "T19n0940_001:0096b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執已即得大持明王。",
        "from": "T19n0940_001:0096b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終已後生兜率天。",
        "from": "T19n0940_001:0096b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不樂取此劍。",
        "from": "T19n0940_001:0096b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取聖輪。",
        "from": "T19n0940_001:0096b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受已即得左訖囉囉惹。",
        "from": "T19n0940_001:0096b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終已後生四王天。",
        "from": "T19n0940_001:0096b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不樂取此輪。",
        "from": "T19n0940_001:0096b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取如意寶。",
        "from": "T19n0940_001:0096b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受已即得五神通作十八變。",
        "from": "T19n0940_001:0096b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然有聲普告大地一切眾生。",
        "from": "T19n0940_001:0096b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言若諸眾生有所求事。",
        "from": "T19n0940_001:0096b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當施與皆令如意。",
        "from": "T19n0940_001:0096b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為建立如意寶幢若見諸佛教法。",
        "from": "T19n0940_001:0096b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即當開視。",
        "from": "T19n0940_001:0096b11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得於一切佛法總持無失。",
        "from": "T19n0940_001:0096b12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達第一勝義諦法。",
        "from": "T19n0940_001:0096b12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見聖藥。",
        "from": "T19n0940_001:0096b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當取以一兩藥。",
        "from": "T19n0940_001:0096b13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能作一俱胝金。",
        "from": "T19n0940_001:0096b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若服此藥即壽同梵天。",
        "from": "T19n0940_001:0096b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見播耨迦。",
        "from": "T19n0940_001:0096b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當取。",
        "from": "T19n0940_001:0096b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著已能於日初出時。",
        "from": "T19n0940_001:0096b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊四大洲悉得周遍。",
        "from": "T19n0940_001:0096b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經少時間還復本處。",
        "from": "T19n0940_001:0096b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見安繕那藥。",
        "from": "T19n0940_001:0096b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當取少分內自眼中。",
        "from": "T19n0940_001:0096b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能盡見三界中事。",
        "from": "T19n0940_001:0096b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見聖莊嚴具。",
        "from": "T19n0940_001:0096b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當取被身。",
        "from": "T19n0940_001:0096b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得相好端嚴隱身自在。",
        "from": "T19n0940_001:0096b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人若不樂求如是等聖成就法。",
        "from": "T19n0940_001:0096b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於彼處止息經宿。",
        "from": "T19n0940_001:0096b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼巖中蓮華合時即知為夜。",
        "from": "T19n0940_001:0096b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼阿修羅女出取華時即知為晝。",
        "from": "T19n0940_001:0096b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時行人當復前行。",
        "from": "T19n0940_001:0096b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去此不遠又見一金城。",
        "from": "T19n0940_001:0096b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當入其城。",
        "from": "T19n0940_001:0096b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見七寶所成宮殿。",
        "from": "T19n0940_001:0096b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼為柱及寶輪寶網種種妙華而為莊嚴。",
        "from": "T19n0940_001:0096b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以真珠交絡其上。",
        "from": "T19n0940_001:0096b25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金沙布地清淨適悅。",
        "from": "T19n0940_001:0096b25_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其殿上有師子座高廣嚴好。",
        "from": "T19n0940_001:0096b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩居其座上。",
        "from": "T19n0940_001:0096b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無數天龍八部。",
        "from": "T19n0940_001:0096b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸仙眾恭敬圍繞。",
        "from": "T19n0940_001:0096b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽受菩薩宣說妙法。",
        "from": "T19n0940_001:0096b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時行人既得至彼。",
        "from": "T19n0940_001:0096b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即起最上大希有心前詣菩薩禮敬而住。",
        "from": "T19n0940_001:0096b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時慈氏菩薩謂行人言。",
        "from": "T19n0940_001:0096c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善來善男子。",
        "from": "T19n0940_001:0096c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人即當答言。",
        "from": "T19n0940_001:0096c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今善來。",
        "from": "T19n0940_001:0096c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩復言善哉善哉善男子。",
        "from": "T19n0940_001:0096c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能發勇猛堅固心來至於此。",
        "from": "T19n0940_001:0096c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故南閻浮提眾生信心堅固。",
        "from": "T19n0940_001:0096c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於佛法精進勇猛。",
        "from": "T19n0940_001:0096c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於我所起恭敬心。",
        "from": "T19n0940_001:0096c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今當知若諸眾生。",
        "from": "T19n0940_001:0096c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲於現世及當生中見我身者。",
        "from": "T19n0940_001:0096c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當發志心誦我根本大明。",
        "from": "T19n0940_001:0096c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得安樂無諸難事而見我身。",
        "from": "T19n0940_001:0096c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根本大明曰。",
        "from": "T19n0940_001:0096c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨囉怛那(二合)怛囉(二合)夜(引)野(一句)那謨吠嚕左那莎(引)彌儞(二)怛他(引)誐多(引)野(三)阿囉喝(二合)帝三藐訖三(二合)沒馱(引)野(四)怛[寧*夜](切身)他(五)唵昧咄侶(二合)怛里(六)昧怛囉(二合引)嚩婆(引)悉儞(七)昧咄侶(二合)怛葛(二合)吒野(八)三摩(二合)囉三摩(二合)囉(九)莎剛鉢囉(二合)底倪也(二合十)娑囉娑囉(十一)尾娑囉尾娑囉(十二)冐馱野冐馱野(十三)冐馱(引)耨誐帝(引十四)摩賀(引)冐地波哩嚩哩底(二合)多摩(引)那細(引)莎(引)賀(引十五)菩薩告言。",
        "from": "T19n0940_001:0096c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子今此大明有大威力。",
        "from": "T19n0940_001:0096c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸修瑜伽行者。",
        "from": "T19n0940_001:0096c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能發志心持誦此明。",
        "from": "T19n0940_001:0096c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人得見我身決定無疑。",
        "from": "T19n0940_001:0096c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次慈氏菩薩告行人言。",
        "from": "T19n0940_001:0096c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今來此何所求耶。",
        "from": "T19n0940_001:0096c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或求見我身聽受正法耶。",
        "from": "T19n0940_001:0096c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或求種種成就法耶。",
        "from": "T19n0940_001:0096c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復求於南閻浮提有大名稱耶。",
        "from": "T19n0940_001:0096c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所求我當施願。",
        "from": "T19n0940_001:0096c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人答言。",
        "from": "T19n0940_001:0096c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩我初發心來入此宮唯為求見菩薩。",
        "from": "T19n0940_001:0096c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今得見心已滿足餘非所求。",
        "from": "T19n0940_001:0096c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今住此乃至菩薩當來成正覺時願我於菩薩所。",
        "from": "T19n0940_001:0096c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽受正法。",
        "from": "T19n0940_001:0096c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩。",
        "from": "T19n0940_001:0096c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞釋迦牟尼佛說是法已。",
        "from": "T19n0940_001:0096c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜信受依教奉行。",
        "from": "T19n0940_001:0096c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說帝釋巖祕密成就儀軌",
        "from": "T19n0940_001:0097a01_0",
        "context_with_next_sentence": false
    }
]