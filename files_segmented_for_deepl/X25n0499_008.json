[
    {
        "source_sentence": "金剛般若波羅蜜經懸判疏鈔卷之八",
        "from": "X25n0499_008:0655c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天寺後學沙門　性起　述",
        "from": "X25n0499_008:0655c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八誦持感應。",
        "from": "X25n0499_008:0655c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文三。",
        "from": "X25n0499_008:0655c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總標。",
        "from": "X25n0499_008:0655c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八誦持感應者。",
        "from": "X25n0499_008:0655c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△次釋。",
        "from": "X25n0499_008:0655c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X25n0499_008:0655c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初列名。",
        "from": "X25n0499_008:0655c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其利有十。",
        "from": "X25n0499_008:0655c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一諸佛護念。",
        "from": "X25n0499_008:0655c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二眾聖弘讚。",
        "from": "X25n0499_008:0655c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三功超餘行。",
        "from": "X25n0499_008:0655c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四內施不及。",
        "from": "X25n0499_008:0655c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五外施無比。",
        "from": "X25n0499_008:0655c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六銷極重障。",
        "from": "X25n0499_008:0655c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七開佛知見。",
        "from": "X25n0499_008:0655c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八福利無邊。",
        "from": "X25n0499_008:0655c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九感應多端。",
        "from": "X25n0499_008:0655c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十常被天人供養。",
        "from": "X25n0499_008:0655c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二轉釋。",
        "from": "X25n0499_008:0655c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文十一諸佛護念。",
        "from": "X25n0499_008:0655c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一諸佛護念者。",
        "from": "X25n0499_008:0655c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_008:0655c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來善護念諸菩薩。",
        "from": "X25n0499_008:0655c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善付囑諸菩薩。",
        "from": "X25n0499_008:0655c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然斯護念有二。",
        "from": "X25n0499_008:0655c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如來住世四十九年。",
        "from": "X25n0499_008:0655c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖說八萬四千法藏。",
        "from": "X25n0499_008:0655c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一般若之法。",
        "from": "X25n0499_008:0655c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常自護念。",
        "from": "X25n0499_008:0655c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二如來滅度後。",
        "from": "X25n0499_008:0655c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至見者聞者。",
        "from": "X25n0499_008:0656a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣生敬信。",
        "from": "X25n0499_008:0656a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦。",
        "from": "X25n0499_008:0656a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別解說。",
        "from": "X25n0499_008:0656a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不歡喜。",
        "from": "X25n0499_008:0656a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普利無邊。",
        "from": "X25n0499_008:0656a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是如來護念此經。",
        "from": "X25n0499_008:0656a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感德力故。",
        "from": "X25n0499_008:0656a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二眾聖弘讚二。",
        "from": "X25n0499_008:0656a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初西竺讚傳。",
        "from": "X25n0499_008:0656a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二眾聖弘讚者。",
        "from": "X25n0499_008:0656a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂無著大士將登地位。",
        "from": "X25n0499_008:0656a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上昇見彌勒菩薩。",
        "from": "X25n0499_008:0656a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳授金剛般若宗旨。",
        "from": "X25n0499_008:0656a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十行偈。",
        "from": "X25n0499_008:0656a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親口解釋。",
        "from": "X25n0499_008:0656a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八祖。",
        "from": "X25n0499_008:0656a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹馬鳴。",
        "from": "X25n0499_008:0656a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大士等。",
        "from": "X25n0499_008:0656a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦弘般若。",
        "from": "X25n0499_008:0656a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為修福之本。",
        "from": "X25n0499_008:0656a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二此土弘闡。",
        "from": "X25n0499_008:0656a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此土五祖。",
        "from": "X25n0499_008:0656a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣勸人持誦此經。",
        "from": "X25n0499_008:0656a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能見性成佛。",
        "from": "X25n0499_008:0656a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故六祖聞之。",
        "from": "X25n0499_008:0656a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁然省悟。",
        "from": "X25n0499_008:0656a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛宗匠。",
        "from": "X25n0499_008:0656a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡入此門。",
        "from": "X25n0499_008:0656a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘闡敷揚。",
        "from": "X25n0499_008:0656a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚莫能盡。",
        "from": "X25n0499_008:0656a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫彌勒是補處之佛。",
        "from": "X25n0499_008:0656a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚以宏傳。",
        "from": "X25n0499_008:0656a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況餘者乎。",
        "from": "X25n0499_008:0656a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三功超餘行二。",
        "from": "X25n0499_008:0656a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初得法超勝。",
        "from": "X25n0499_008:0656a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三功超餘行者。",
        "from": "X25n0499_008:0656a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有大士經無量劫。",
        "from": "X25n0499_008:0656a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行諸度行。",
        "from": "X25n0499_008:0656a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如捨身命布施等。",
        "from": "X25n0499_008:0656a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩知一切法無我。",
        "from": "X25n0499_008:0656a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得成于忍。",
        "from": "X25n0499_008:0656a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此菩薩前勝菩薩。",
        "from": "X25n0499_008:0656a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得功德。",
        "from": "X25n0499_008:0656a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不化可思議。",
        "from": "X25n0499_008:0656a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二供行不及。",
        "from": "X25n0499_008:0656a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_008:0656a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念過去無量阿僧祇劫。",
        "from": "X25n0499_008:0656a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於燃燈佛前。",
        "from": "X25n0499_008:0656a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得值八百四千萬億那由他諸佛。",
        "from": "X25n0499_008:0656a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆供養承事。",
        "from": "X25n0499_008:0656a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無空過者。",
        "from": "X25n0499_008:0656a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人。",
        "from": "X25n0499_008:0656a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持般若一行。",
        "from": "X25n0499_008:0656a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我所供養諸佛功德。",
        "from": "X25n0499_008:0656a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至算數譬喻所不能及。",
        "from": "X25n0499_008:0656a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解曰。",
        "from": "X25n0499_008:0656a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供佛之行尚不及。",
        "from": "X25n0499_008:0656a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況餘行乎。",
        "from": "X25n0499_008:0656a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四內施不及二。",
        "from": "X25n0499_008:0656a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初每日施行劣。",
        "from": "X25n0499_008:0656a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四內施不及者。",
        "from": "X25n0499_008:0656a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_008:0656a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人。",
        "from": "X25n0499_008:0656a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初日分以恒河沙等身布施。",
        "from": "X25n0499_008:0656a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中分後日以恒河沙等布施。",
        "from": "X25n0499_008:0656a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是無量百千萬億劫。",
        "from": "X25n0499_008:0656a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以身布施。",
        "from": "X25n0499_008:0656a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△次持般若行勝。",
        "from": "X25n0499_008:0656b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人。",
        "from": "X25n0499_008:0656b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此經典。",
        "from": "X25n0499_008:0656b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心不逆。",
        "from": "X25n0499_008:0656b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其福勝彼。",
        "from": "X25n0499_008:0656b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況書寫受持讀誦為人解說。",
        "from": "X25n0499_008:0656b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可思議福德較量者哉。",
        "from": "X25n0499_008:0656b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五外施無比二。",
        "from": "X25n0499_008:0656b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初外施無及。",
        "from": "X25n0499_008:0656b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五外施無比者。",
        "from": "X25n0499_008:0656b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_008:0656b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如恒河中所有沙數。",
        "from": "X25n0499_008:0656b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是沙等恒河大千世界。",
        "from": "X25n0499_008:0656b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶以用布施。",
        "from": "X25n0499_008:0656b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△次持行福勝。",
        "from": "X25n0499_008:0656b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人。",
        "from": "X25n0499_008:0656b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此經中。",
        "from": "X25n0499_008:0656b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至受持四句等。",
        "from": "X25n0499_008:0656b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他人說。",
        "from": "X25n0499_008:0656b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此福德勝前福。",
        "from": "X25n0499_008:0656b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六銷極重障。",
        "from": "X25n0499_008:0656b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六銷極重障者。",
        "from": "X25n0499_008:0656b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人多生累劫。",
        "from": "X25n0499_008:0656b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪障深重。",
        "from": "X25n0499_008:0656b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能於現生中。",
        "from": "X25n0499_008:0656b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他緣迫逼。",
        "from": "X25n0499_008:0656b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障於道法。",
        "from": "X25n0499_008:0656b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得熏修。",
        "from": "X25n0499_008:0656b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異熟報。",
        "from": "X25n0499_008:0656b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障實難除滅(今持般若盡淨無餘)。",
        "from": "X25n0499_008:0656b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如教啟十因中辨。",
        "from": "X25n0499_008:0656b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七開佛知見三。",
        "from": "X25n0499_008:0656b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初聞信得法。",
        "from": "X25n0499_008:0656b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七開佛知見者。",
        "from": "X25n0499_008:0656b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_008:0656b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人。",
        "from": "X25n0499_008:0656b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞是經。",
        "from": "X25n0499_008:0656b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心清淨。",
        "from": "X25n0499_008:0656b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生實相。",
        "from": "X25n0499_008:0656b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人。",
        "from": "X25n0499_008:0656b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就第一希有功德。",
        "from": "X25n0499_008:0656b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫實相者。",
        "from": "X25n0499_008:0656b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸佛心印。",
        "from": "X25n0499_008:0656b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟佛與佛。",
        "from": "X25n0499_008:0656b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能究竟。",
        "from": "X25n0499_008:0656b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二諸聖莫測。",
        "from": "X25n0499_008:0656b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華云。",
        "from": "X25n0499_008:0656b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不退諸菩薩。",
        "from": "X25n0499_008:0656b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其數如恒沙。",
        "from": "X25n0499_008:0656b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心共思求。",
        "from": "X25n0499_008:0656b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不能知。",
        "from": "X25n0499_008:0656b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除諸菩薩眾。",
        "from": "X25n0499_008:0656b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信力堅固者。",
        "from": "X25n0499_008:0656b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結歸本經。",
        "from": "X25n0499_008:0656b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知法華以實相。",
        "from": "X25n0499_008:0656b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為開示悟入之本。",
        "from": "X25n0499_008:0656b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此經者。",
        "from": "X25n0499_008:0656b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一念淨信。",
        "from": "X25n0499_008:0656b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生實相。",
        "from": "X25n0499_008:0656b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非開佛知見者乎。",
        "from": "X25n0499_008:0656b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八福利無邊二。",
        "from": "X25n0499_008:0656b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初無住行勝。",
        "from": "X25n0499_008:0656b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八福利無邊者。",
        "from": "X25n0499_008:0656c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_008:0656c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由菩薩知般若。",
        "from": "X25n0499_008:0656c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無住相布施。",
        "from": "X25n0499_008:0656c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其福德不可思議。",
        "from": "X25n0499_008:0656c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方虗空。",
        "from": "X25n0499_008:0656c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚不能喻。",
        "from": "X25n0499_008:0656c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況比餘法之類而能及哉。",
        "from": "X25n0499_008:0656c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△次結歸本旨。",
        "from": "X25n0499_008:0656c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解曰。",
        "from": "X25n0499_008:0656c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不受持此經。",
        "from": "X25n0499_008:0656c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能了無住相布施者乎。",
        "from": "X25n0499_008:0656c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△九感應多端二。",
        "from": "X25n0499_008:0656c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總讚普益。",
        "from": "X25n0499_008:0656c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九感應多端者。",
        "from": "X25n0499_008:0656c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫以般若之法。",
        "from": "X25n0499_008:0656c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如摩尼寶珠。",
        "from": "X25n0499_008:0656c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿一切諸所求者。",
        "from": "X25n0499_008:0656c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故利濟無邊。",
        "from": "X25n0499_008:0656c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益施無盡。",
        "from": "X25n0499_008:0656c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別讚弘濟。",
        "from": "X25n0499_008:0656c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以解冤而釋結。",
        "from": "X25n0499_008:0656c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(唐武德年間。",
        "from": "X25n0499_008:0656c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長安蘇仁恃富。",
        "from": "X25n0499_008:0656c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知罪福。",
        "from": "X25n0499_008:0656c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過分宰殺。",
        "from": "X25n0499_008:0656c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘重過。",
        "from": "X25n0499_008:0656c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽染疾。",
        "from": "X25n0499_008:0656c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見二使押見閻羅。",
        "from": "X25n0499_008:0656c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝生前修福。",
        "from": "X25n0499_008:0656c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至今富。",
        "from": "X25n0499_008:0656c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今恣意殺生。",
        "from": "X25n0499_008:0656c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "減算絕祿。",
        "from": "X25n0499_008:0656c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令獄卒驅至刀山。",
        "from": "X25n0499_008:0656c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁即憚怖。",
        "from": "X25n0499_008:0656c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云。",
        "from": "X25n0499_008:0656c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁生前。",
        "from": "X25n0499_008:0656c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾請書金剛經一卷。",
        "from": "X25n0499_008:0656c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "送安國寺。",
        "from": "X25n0499_008:0656c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神敬僧受持。",
        "from": "X25n0499_008:0656c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此僧遷化。",
        "from": "X25n0499_008:0656c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈無報應。",
        "from": "X25n0499_008:0656c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言未竟見神敬。",
        "from": "X25n0499_008:0656c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手持金剛經。",
        "from": "X25n0499_008:0656c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作證騐。",
        "from": "X25n0499_008:0656c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願王放赦。",
        "from": "X25n0499_008:0656c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王即允從。",
        "from": "X25n0499_008:0656c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回陽增壽。",
        "from": "X25n0499_008:0656c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印施此經千卷。",
        "from": "X25n0499_008:0656c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修水陸大齋。",
        "from": "X25n0499_008:0656c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施田百畝。",
        "from": "X25n0499_008:0656c13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬供三寶)。",
        "from": "X25n0499_008:0656c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以脫苦而超昇。",
        "from": "X25n0499_008:0656c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(隋沙門名法藏。",
        "from": "X25n0499_008:0656c14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稟性精嚴。",
        "from": "X25n0499_008:0656c14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于洛州縣募眾建寺。",
        "from": "X25n0499_008:0656c14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又寫經八百卷。",
        "from": "X25n0499_008:0656c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂法藏曰。",
        "from": "X25n0499_008:0656c14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝造寺寫經。",
        "from": "X25n0499_008:0656c14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有互用之罪。",
        "from": "X25n0499_008:0656c14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今勸汝誦金剛經。",
        "from": "X25n0499_008:0656c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可消此罪。",
        "from": "X25n0499_008:0656c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄而疾愈。",
        "from": "X25n0499_008:0656c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馨賣衣鉢。",
        "from": "X25n0499_008:0656c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫此經。",
        "from": "X25n0499_008:0656c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人受持。",
        "from": "X25n0499_008:0656c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽至九十。",
        "from": "X25n0499_008:0656c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐而化。",
        "from": "X25n0499_008:0656c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云生西矣)。",
        "from": "X25n0499_008:0656c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以讀誦而延命。",
        "from": "X25n0499_008:0656c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(如琰法師。",
        "from": "X25n0499_008:0656c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞相師云。",
        "from": "X25n0499_008:0656c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難過十九歲。",
        "from": "X25n0499_008:0656c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大驚。",
        "from": "X25n0499_008:0656c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即回誦金剛經。",
        "from": "X25n0499_008:0656c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後壽至九十歲而終)。",
        "from": "X25n0499_008:0656c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以了道而無生。",
        "from": "X25n0499_008:0656c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(宋時有王氏女。",
        "from": "X25n0499_008:0656c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常念金剛經。",
        "from": "X25n0499_008:0656c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懷孕二十八月。",
        "from": "X25n0499_008:0656c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂產之患。",
        "from": "X25n0499_008:0656c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶見僧勸。",
        "from": "X25n0499_008:0656c17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印施金剛經千卷。",
        "from": "X25n0499_008:0656c18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王氏遂依。",
        "from": "X25n0499_008:0656c18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生二男。",
        "from": "X25n0499_008:0656c18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽至六十。",
        "from": "X25n0499_008:0656c18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無疾而終。",
        "from": "X25n0499_008:0656c18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見二使引。",
        "from": "X25n0499_008:0656c18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅命坐。",
        "from": "X25n0499_008:0656c18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦經畢。",
        "from": "X25n0499_008:0656c18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X25n0499_008:0656c18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不誦補缺真言。",
        "from": "X25n0499_008:0656c18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X25n0499_008:0656c19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世聞無本。",
        "from": "X25n0499_008:0656c19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王即示呪曰。",
        "from": "X25n0499_008:0656c19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崦呼嚧呼嚧社曳穆契莎訶。",
        "from": "X25n0499_008:0656c19_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一回向真如實際。",
        "from": "X25n0499_008:0656c19_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心契合。",
        "from": "X25n0499_008:0656c19_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二回向佛果菩提。",
        "from": "X25n0499_008:0656c19_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念圓滿。",
        "from": "X25n0499_008:0656c19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三回向法界一切眾生。",
        "from": "X25n0499_008:0656c20_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同生淨土。",
        "from": "X25n0499_008:0656c20_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王誦畢。",
        "from": "X25n0499_008:0656c20_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即使送回。",
        "from": "X25n0499_008:0656c20_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝再壽終。",
        "from": "X25n0499_008:0656c20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得生淨土。",
        "from": "X25n0499_008:0656c20_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此間不復來矣。",
        "from": "X25n0499_008:0656c20_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云了道而無生也)。",
        "from": "X25n0499_008:0656c20_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以講念而消毒。",
        "from": "X25n0499_008:0656c21_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(昔南嶽思大師。",
        "from": "X25n0499_008:0656c21_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深達般若。",
        "from": "X25n0499_008:0656c21_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善通佛慧。",
        "from": "X25n0499_008:0656c21_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得妙旨無不窮源。",
        "from": "X25n0499_008:0656c21_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以廣化者多。",
        "from": "X25n0499_008:0656c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當時諸大論師。",
        "from": "X25n0499_008:0656c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生忌妬。",
        "from": "X25n0499_008:0656c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即將毒藥暗藏食內供養。",
        "from": "X25n0499_008:0656c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師飲後。",
        "from": "X25n0499_008:0656c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃有痛患。",
        "from": "X25n0499_008:0656c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因念般若法力解化。",
        "from": "X25n0499_008:0656c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未罹其患)。",
        "from": "X25n0499_008:0656c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以稱名而退敵。",
        "from": "X25n0499_008:0656c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(昔帝釋天尊。",
        "from": "X25n0499_008:0656c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被修羅爭權。",
        "from": "X25n0499_008:0656c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝即昇善法堂。",
        "from": "X25n0499_008:0656c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念般若力。",
        "from": "X25n0499_008:0656c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而即退散)。",
        "from": "X25n0499_008:0656c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感應萬殊。",
        "from": "X25n0499_008:0656c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止非一二。",
        "from": "X25n0499_008:0656c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現載典章。",
        "from": "X25n0499_008:0656c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱有名舉。",
        "from": "X25n0499_008:0656c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以無為妙果菩提。",
        "from": "X25n0499_008:0656c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚以成就。",
        "from": "X25n0499_008:0657a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況人天小果之應者哉。",
        "from": "X25n0499_008:0657a01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△十常被供養。",
        "from": "X25n0499_008:0657a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文三。",
        "from": "X25n0499_008:0657a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初指諸果同本。",
        "from": "X25n0499_008:0657a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十常被天人供養者。",
        "from": "X25n0499_008:0657a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫一切佛者。",
        "from": "X25n0499_008:0657a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法為師。",
        "from": "X25n0499_008:0657a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無其法。",
        "from": "X25n0499_008:0657a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能成就六度妙行及法報化三身者乎。",
        "from": "X25n0499_008:0657a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故一切佛及諸佛阿耨菩提。",
        "from": "X25n0499_008:0657a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從此經出故。",
        "from": "X25n0499_008:0657a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以有法即有佛。",
        "from": "X25n0499_008:0657a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛即有僧。",
        "from": "X25n0499_008:0657a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身無二。",
        "from": "X25n0499_008:0657a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一體同觀。",
        "from": "X25n0499_008:0657a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛雖去世。",
        "from": "X25n0499_008:0657a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身常住。",
        "from": "X25n0499_008:0657a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無般若經卷。",
        "from": "X25n0499_008:0657a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能知法身常住乎。",
        "from": "X25n0499_008:0657a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故信受弟子。",
        "from": "X25n0499_008:0657a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即信受佛真法身。",
        "from": "X25n0499_008:0657a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今持般若之行。",
        "from": "X25n0499_008:0657a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即修諸佛之妙行。",
        "from": "X25n0499_008:0657a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既修諸佛之妙行。",
        "from": "X25n0499_008:0657a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必證妙行之果。",
        "from": "X25n0499_008:0657a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知始終一貫。",
        "from": "X25n0499_008:0657a09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果無二者。",
        "from": "X25n0499_008:0657a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非般若法也。",
        "from": "X25n0499_008:0657a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二指全身舍利。",
        "from": "X25n0499_008:0657a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故在在則天人供養。",
        "from": "X25n0499_008:0657a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時時則舍利分彰。",
        "from": "X25n0499_008:0657a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X25n0499_008:0657a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有隨說此經。",
        "from": "X25n0499_008:0657a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至四句偈等。",
        "from": "X25n0499_008:0657a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知一切世間天人阿修羅等。",
        "from": "X25n0499_008:0657a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆應供養。",
        "from": "X25n0499_008:0657a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛塔廟。",
        "from": "X25n0499_008:0657a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況有人盡能受持讀誦。",
        "from": "X25n0499_008:0657a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人成就第一希有之法。",
        "from": "X25n0499_008:0657a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是經典所在之處。",
        "from": "X25n0499_008:0657a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即有佛故。",
        "from": "X25n0499_008:0657a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三問答斷疑二。",
        "from": "X25n0499_008:0657a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初問答。",
        "from": "X25n0499_008:0657a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X25n0499_008:0657a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華是諸法中王。",
        "from": "X25n0499_008:0657a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經亦是諸法中主。",
        "from": "X25n0499_008:0657a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何得此經更為尊妙。",
        "from": "X25n0499_008:0657a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "X25n0499_008:0657a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華為開權顯實。",
        "from": "X25n0499_008:0657a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會三歸一。",
        "from": "X25n0499_008:0657a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾令三乘俱稟受記作佛。",
        "from": "X25n0499_008:0657a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無般若之法。",
        "from": "X25n0499_008:0657a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道何修。",
        "from": "X25n0499_008:0657a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙果何證。",
        "from": "X25n0499_008:0657a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以法華。",
        "from": "X25n0499_008:0657a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "委付家財。",
        "from": "X25n0499_008:0657a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以般若玄宗。",
        "from": "X25n0499_008:0657a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為其本。",
        "from": "X25n0499_008:0657a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二結歎諸法中王。",
        "from": "X25n0499_008:0657a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知法華。",
        "from": "X25n0499_008:0657a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既為諸法中王。",
        "from": "X25n0499_008:0657a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經亦為諸經中王。",
        "from": "X25n0499_008:0657a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛親證之。",
        "from": "X25n0499_008:0657a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩修之。",
        "from": "X25n0499_008:0657a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛佛道同。",
        "from": "X25n0499_008:0657a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟此一法者耳。",
        "from": "X25n0499_008:0657a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結大科。",
        "from": "X25n0499_008:0657b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上第八諸持感應一科已竟。",
        "from": "X25n0499_008:0657b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛般若波羅蜜經懸判疏鈔卷之八(終)",
        "from": "X25n0499_008:0657b04_0",
        "context_with_next_sentence": false
    }
]