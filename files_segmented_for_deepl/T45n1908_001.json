[
    {
        "source_sentence": "大乘六情懺悔",
        "from": "T45n1908_001:0921c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋元曉撰",
        "from": "T45n1908_001:0921c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依法界始遊行者。",
        "from": "T45n1908_001:0921c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四威儀無一唐遊。",
        "from": "T45n1908_001:0921c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念諸佛不思議德。",
        "from": "T45n1908_001:0921c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常思實相杇銷業障。",
        "from": "T45n1908_001:0921c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為六道無邊眾生。",
        "from": "T45n1908_001:0921c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命十方無量諸佛。",
        "from": "T45n1908_001:0921c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛不異而亦非一。",
        "from": "T45n1908_001:0921c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一即一切一切即一。",
        "from": "T45n1908_001:0921c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無所住而無不住。",
        "from": "T45n1908_001:0921c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無所為而無不為。",
        "from": "T45n1908_001:0921c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一相好一一毛孔。",
        "from": "T45n1908_001:0921c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍無邊界盡未來際。",
        "from": "T45n1908_001:0921c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無障無礙無有差別。",
        "from": "T45n1908_001:0921c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教化眾生無有休息。",
        "from": "T45n1908_001:0921c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T45n1908_001:0921c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方三世一塵一念。",
        "from": "T45n1908_001:0921c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死涅槃無二無別。",
        "from": "T45n1908_001:0921c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲般若不取不捨。",
        "from": "T45n1908_001:0921c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以得不共法相應故。",
        "from": "T45n1908_001:0921c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於此處蓮花藏界。",
        "from": "T45n1908_001:0921c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盧舍那佛坐蓮花臺。",
        "from": "T45n1908_001:0921c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放無邊光。",
        "from": "T45n1908_001:0921c17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集無量眾生。",
        "from": "T45n1908_001:0921c17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉無所轉大乘法輪。",
        "from": "T45n1908_001:0921c18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩大眾遍滿虛空。",
        "from": "T45n1908_001:0921c18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受無所受大乘法樂。",
        "from": "T45n1908_001:0921c19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今我等同在於此一實三寶無過之處。",
        "from": "T45n1908_001:0921c19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見不聞如聾如盲。",
        "from": "T45n1908_001:0921c20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有佛性。",
        "from": "T45n1908_001:0921c20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何為如是。",
        "from": "T45n1908_001:0921c21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明顛倒妄作外塵。",
        "from": "T45n1908_001:0921c21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執我我所造種種業。",
        "from": "T45n1908_001:0921c21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自以覆弊不得見聞。",
        "from": "T45n1908_001:0921c22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如餓鬼臨河見火。",
        "from": "T45n1908_001:0921c22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今佛前深生慚愧。",
        "from": "T45n1908_001:0921c23_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心誠心懺悔。",
        "from": "T45n1908_001:0921c23_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及眾生無始以來無明所醉。",
        "from": "T45n1908_001:0921c24_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作罪無量。",
        "from": "T45n1908_001:0921c24_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五逆十惡無所不造。",
        "from": "T45n1908_001:0921c25_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自作教他見作隨喜。",
        "from": "T45n1908_001:0921c25_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾罪不可稱數。",
        "from": "T45n1908_001:0921c26_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛賢聖之所證知。",
        "from": "T45n1908_001:0921c26_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已作之罪深生慚愧。",
        "from": "T45n1908_001:0921c27_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所未作者更不敢作。",
        "from": "T45n1908_001:0921c27_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□此諸罪實無所有。",
        "from": "T45n1908_001:0921c28_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾緣和合假名為業。",
        "from": "T45n1908_001:0921c28_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即緣無業離緣亦無。",
        "from": "T45n1908_001:0921c29_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非內非外不在中間。",
        "from": "T45n1908_001:0921c29_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去已滅。",
        "from": "T45n1908_001:0922a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來未生現在無住。",
        "from": "T45n1908_001:0922a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故所作以其無住故亦無生。",
        "from": "T45n1908_001:0922a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先有非生先無誰生。",
        "from": "T45n1908_001:0922a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若言本無及與今有。",
        "from": "T45n1908_001:0922a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二義和合名為生者。",
        "from": "T45n1908_001:0922a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當本無時即無今有。",
        "from": "T45n1908_001:0922a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當今有時非有本無。",
        "from": "T45n1908_001:0922a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先後不及有無不合。",
        "from": "T45n1908_001:0922a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二義無合何處有生。",
        "from": "T45n1908_001:0922a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合義既壞散亦不成。",
        "from": "T45n1908_001:0922a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不合不散非有非無。",
        "from": "T45n1908_001:0922a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無時無有對何為無。",
        "from": "T45n1908_001:0922a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有時無無待誰為有。",
        "from": "T45n1908_001:0922a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先後有無皆不得成。",
        "from": "T45n1908_001:0922a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知業性本來無生。",
        "from": "T45n1908_001:0922a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從本以來不得有生。",
        "from": "T45n1908_001:0922a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於何處得有無生。",
        "from": "T45n1908_001:0922a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有生無生俱不可得。",
        "from": "T45n1908_001:0922a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言不可得亦不可得。",
        "from": "T45n1908_001:0922a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業性如是諸佛亦爾。",
        "from": "T45n1908_001:0922a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經說言。",
        "from": "T45n1908_001:0922a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如眾生造作諸業。",
        "from": "T45n1908_001:0922a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善若惡。",
        "from": "T45n1908_001:0922a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非內非外。",
        "from": "T45n1908_001:0922a12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是業性非有非無。",
        "from": "T45n1908_001:0922a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如是。",
        "from": "T45n1908_001:0922a12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無今有非無因生。",
        "from": "T45n1908_001:0922a13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無作無受。",
        "from": "T45n1908_001:0922a13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時節和合故得果報。",
        "from": "T45n1908_001:0922a13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者若能數數思惟如是實相而懺悔者。",
        "from": "T45n1908_001:0922a14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四重五逆無所能為。",
        "from": "T45n1908_001:0922a15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如虛空不為火燒。",
        "from": "T45n1908_001:0922a15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其放逸無慚無愧。",
        "from": "T45n1908_001:0922a16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能思惟業實相者。",
        "from": "T45n1908_001:0922a16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無罪性將入泥梨。",
        "from": "T45n1908_001:0922a17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如幻虎還吞幻師。",
        "from": "T45n1908_001:0922a17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當於十方佛前。",
        "from": "T45n1908_001:0922a18_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深生慚愧而作懺悔。",
        "from": "T45n1908_001:0922a18_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是悔時莫以為作。",
        "from": "T45n1908_001:0922a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即應思惟懺悔實相所悔之罪既無所有。",
        "from": "T45n1908_001:0922a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得有能懺悔者。",
        "from": "T45n1908_001:0922a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能悔所悔皆不可得。",
        "from": "T45n1908_001:0922a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於何處得有悔法於諸業障作是悔已。",
        "from": "T45n1908_001:0922a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應懺悔六情放逸。",
        "from": "T45n1908_001:0922a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及眾生無始已來。",
        "from": "T45n1908_001:0922a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解諸法本來無生。",
        "from": "T45n1908_001:0922a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄想顛倒計我我所。",
        "from": "T45n1908_001:0922a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內立六情依而生識。",
        "from": "T45n1908_001:0922a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外作六塵執為實有。",
        "from": "T45n1908_001:0922a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知皆是自心所作。",
        "from": "T45n1908_001:0922a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如幻如夢永無所有。",
        "from": "T45n1908_001:0922a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中橫計男女等相。",
        "from": "T45n1908_001:0922a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起諸煩惱自以纏縛。",
        "from": "T45n1908_001:0922a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長沒苦海不求出要。",
        "from": "T45n1908_001:0922a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜慮之時甚可怪哉。",
        "from": "T45n1908_001:0922a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如眠時睡蓋覆心。",
        "from": "T45n1908_001:0922a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄見己身大水所漂。",
        "from": "T45n1908_001:0922a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知但是夢心所作。",
        "from": "T45n1908_001:0922a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂實流溺生大怖懅。",
        "from": "T45n1908_001:0922a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未覺之時更作異夢。",
        "from": "T45n1908_001:0922a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂我所見是夢非實。",
        "from": "T45n1908_001:0922b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心性聰故夢內知夢。",
        "from": "T45n1908_001:0922b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於其溺不生其懅。",
        "from": "T45n1908_001:0922b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而未能知身臥床上。",
        "from": "T45n1908_001:0922b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動頭搖手勤求永覺。",
        "from": "T45n1908_001:0922b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永覺之時追緣前夢。",
        "from": "T45n1908_001:0922b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水與流身皆無所有。",
        "from": "T45n1908_001:0922b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯見本來靜臥於床。",
        "from": "T45n1908_001:0922b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長夢亦爾。",
        "from": "T45n1908_001:0922b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明覆心妄作六道。",
        "from": "T45n1908_001:0922b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流轉八苦內因諸佛不思議熏。",
        "from": "T45n1908_001:0922b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外依諸佛大悲願力。",
        "from": "T45n1908_001:0922b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髣髴信解。",
        "from": "T45n1908_001:0922b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及眾生。",
        "from": "T45n1908_001:0922b07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯寢長夢妄計為實。",
        "from": "T45n1908_001:0922b07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違順六塵男女二相。",
        "from": "T45n1908_001:0922b07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並是我夢。",
        "from": "T45n1908_001:0922b08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永無實事。",
        "from": "T45n1908_001:0922b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何所憂喜何所貪瞋。",
        "from": "T45n1908_001:0922b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數數思惟。",
        "from": "T45n1908_001:0922b09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是夢觀。",
        "from": "T45n1908_001:0922b09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸漸修得如夢三昧。",
        "from": "T45n1908_001:0922b09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此三昧得無生忍。",
        "from": "T45n1908_001:0922b10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從於長夢豁然而覺。",
        "from": "T45n1908_001:0922b10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知本來永無流轉。",
        "from": "T45n1908_001:0922b11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是一心臥一如床。",
        "from": "T45n1908_001:0922b11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離能如是。",
        "from": "T45n1908_001:0922b12_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數數思惟。",
        "from": "T45n1908_001:0922b12_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖緣六塵不以為實。",
        "from": "T45n1908_001:0922b12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱羞愧不能自逸。",
        "from": "T45n1908_001:0922b13_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名大乘六情懺悔。",
        "from": "T45n1908_001:0922b13_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘六情懺悔",
        "from": "T45n1908_001:0922b15_0",
        "context_with_next_sentence": false
    }
]