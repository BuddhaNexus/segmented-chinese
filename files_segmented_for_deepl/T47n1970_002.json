[
    {
        "source_sentence": "龍舒增廣淨土文卷第二",
        "from": "T47n1970_002:0257b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國學進士王日休譔",
        "from": "T47n1970_002:0257b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大藏之中有無量清淨平等覺經。",
        "from": "T47n1970_002:0257b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀過度人道經。",
        "from": "T47n1970_002:0257b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量壽經。",
        "from": "T47n1970_002:0257b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量壽莊嚴經。",
        "from": "T47n1970_002:0257b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者本為一經。",
        "from": "T47n1970_002:0257b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譯者不同故有四名。",
        "from": "T47n1970_002:0257b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其舛訛甚多。",
        "from": "T47n1970_002:0257b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予久已校正。",
        "from": "T47n1970_002:0257b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦刊板以行。",
        "from": "T47n1970_002:0257b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今按此經及餘經傳。",
        "from": "T47n1970_002:0257b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為淨土總要。",
        "from": "T47n1970_002:0257b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土總要一",
        "from": "T47n1970_002:0257b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統言。",
        "from": "T47n1970_002:0257b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大藏不止有十餘經言西方淨土事。",
        "from": "T47n1970_002:0257b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其大略謂。",
        "from": "T47n1970_002:0257b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼處以七寶莊嚴。",
        "from": "T47n1970_002:0257b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無地獄餓鬼禽畜以至蜎飛蠕動之類。",
        "from": "T47n1970_002:0257b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常清淨自然。",
        "from": "T47n1970_002:0257b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一切穢雜。",
        "from": "T47n1970_002:0257b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名淨土。",
        "from": "T47n1970_002:0257b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人皆蓮華中生。",
        "from": "T47n1970_002:0257b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長生不老。",
        "from": "T47n1970_002:0257b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣食宅宇隨意化成。",
        "from": "T47n1970_002:0257b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其景序長春。",
        "from": "T47n1970_002:0257b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無復寒暑。",
        "from": "T47n1970_002:0257b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大受快樂。",
        "from": "T47n1970_002:0257b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一切苦惱。",
        "from": "T47n1970_002:0257b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名極樂世界。",
        "from": "T47n1970_002:0257b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其佛名阿彌陀者梵語也。",
        "from": "T47n1970_002:0257b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云無量。",
        "from": "T47n1970_002:0257b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此佛光明照見十方三界無有限量。",
        "from": "T47n1970_002:0257b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡念佛眾生無不知之。",
        "from": "T47n1970_002:0257b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故人名無量光佛。",
        "from": "T47n1970_002:0257b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此佛壽命與其國中人民壽命皆無有限量。",
        "from": "T47n1970_002:0257b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖恒河沙劫亦無有盡。",
        "from": "T47n1970_002:0257b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故又名無量壽佛。",
        "from": "T47n1970_002:0257b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此佛有大誓願度人。",
        "from": "T47n1970_002:0257b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其威神不可思議。",
        "from": "T47n1970_002:0257b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故至心信向念其名號者。",
        "from": "T47n1970_002:0257b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世必消除災難。",
        "from": "T47n1970_002:0257b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禳却冤鬼。",
        "from": "T47n1970_002:0257b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安靜形神。",
        "from": "T47n1970_002:0257b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增迎福壽。",
        "from": "T47n1970_002:0257b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方七寶池中則生蓮花一朵。",
        "from": "T47n1970_002:0257b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他日於其中託生直脫輪迴之外。",
        "from": "T47n1970_002:0257b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此者皆有事跡。",
        "from": "T47n1970_002:0257b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非虛言也。",
        "from": "T47n1970_002:0257b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其說甚易行。",
        "from": "T47n1970_002:0257b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡大藏中。",
        "from": "T47n1970_002:0257b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬四千法門無如此之要捷者。",
        "from": "T47n1970_002:0257b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而人或不知。",
        "from": "T47n1970_002:0257b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可痛惜或。",
        "from": "T47n1970_002:0257b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知而不行。",
        "from": "T47n1970_002:0257b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尤可痛惜也。",
        "from": "T47n1970_002:0257b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土總要二",
        "from": "T47n1970_002:0257b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大阿彌陀經云。",
        "from": "T47n1970_002:0257c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦佛一日容顏異常。",
        "from": "T47n1970_002:0257c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者阿難怪而問之。",
        "from": "T47n1970_002:0257c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T47n1970_002:0257c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉。",
        "from": "T47n1970_002:0257c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝所問者勝於供養一天下聲聞緣覺。",
        "from": "T47n1970_002:0257c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及布施諸天人民以至蜎飛蠕動之類。",
        "from": "T47n1970_002:0257c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖至累劫。",
        "from": "T47n1970_002:0257c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶百千萬倍。",
        "from": "T47n1970_002:0257c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以及。",
        "from": "T47n1970_002:0257c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T47n1970_002:0257c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸天帝王人民乃至蜎飛蠕動之類。",
        "from": "T47n1970_002:0257c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆因所問而得度脫之道。",
        "from": "T47n1970_002:0257c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此觀之。",
        "from": "T47n1970_002:0257c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是釋迦佛初欲說阿彌陀佛之時。",
        "from": "T47n1970_002:0257c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其存於心而形於色者。",
        "from": "T47n1970_002:0257c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已異於平日。",
        "from": "T47n1970_002:0257c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則阿彌陀佛所以感諸佛者。",
        "from": "T47n1970_002:0257c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固已非常。",
        "from": "T47n1970_002:0257c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於感一切眾生者乎。",
        "from": "T47n1970_002:0257c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及阿難問而告之。",
        "from": "T47n1970_002:0257c10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則謂諸天帝王人民以至蜎飛蠕動之類。",
        "from": "T47n1970_002:0257c10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆因汝所問而得度脫之道。",
        "from": "T47n1970_002:0257c11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是上自諸天下至蠕動之類。",
        "from": "T47n1970_002:0257c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆同在三界之內。",
        "from": "T47n1970_002:0257c12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不出輪迴。",
        "from": "T47n1970_002:0257c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以未為得度脫者。",
        "from": "T47n1970_002:0257c13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛大願大力無所不度。",
        "from": "T47n1970_002:0257c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故皆度脫之也。",
        "from": "T47n1970_002:0257c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀其初發偈云。",
        "from": "T47n1970_002:0257c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我至成佛時。",
        "from": "T47n1970_002:0257c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名聲超十方。",
        "from": "T47n1970_002:0257c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人天欣得聞。",
        "from": "T47n1970_002:0257c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱來生我剎。",
        "from": "T47n1970_002:0257c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄鬼畜生亦生我剎中。",
        "from": "T47n1970_002:0257c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則凡在三界六道輪迴之內者無所不度。",
        "from": "T47n1970_002:0257c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可知矣。",
        "from": "T47n1970_002:0257c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以此經云。",
        "from": "T47n1970_002:0257c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛現在西方極樂世界。",
        "from": "T47n1970_002:0257c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又在十方世界。",
        "from": "T47n1970_002:0257c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教化無央數天人民。",
        "from": "T47n1970_002:0257c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至蜎飛蠕動之類。",
        "from": "T47n1970_002:0257c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不得過度解脫者。",
        "from": "T47n1970_002:0257c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜎飛謂微細飛蟲也。",
        "from": "T47n1970_002:0257c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蠕動謂微細蛆蟲也。",
        "from": "T47n1970_002:0257c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此者佛尚化度。",
        "from": "T47n1970_002:0257c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於人乎。",
        "from": "T47n1970_002:0257c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是其所以廣度眾生無有窮極。",
        "from": "T47n1970_002:0257c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而人一念歸依。",
        "from": "T47n1970_002:0257c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂生其國。",
        "from": "T47n1970_002:0257c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無足疑也。",
        "from": "T47n1970_002:0257c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土總要三",
        "from": "T47n1970_002:0257c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經又云。",
        "from": "T47n1970_002:0257c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無數劫以前。",
        "from": "T47n1970_002:0257c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有世自在王佛。",
        "from": "T47n1970_002:0257c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出化度眾生。",
        "from": "T47n1970_002:0257c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時有大國王。",
        "from": "T47n1970_002:0257c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往聽說法。",
        "from": "T47n1970_002:0257c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有覺悟。",
        "from": "T47n1970_002:0257c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃捨國王之位。",
        "from": "T47n1970_002:0257c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而往修行。",
        "from": "T47n1970_002:0257c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號曰法藏比丘。",
        "from": "T47n1970_002:0257c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即阿彌陀佛也。",
        "from": "T47n1970_002:0257c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對世自在王佛。",
        "from": "T47n1970_002:0257c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發四十八大願。",
        "from": "T47n1970_002:0257c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願願皆為濟度眾生。",
        "from": "T47n1970_002:0258a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發此願已乃精進。",
        "from": "T47n1970_002:0258a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以了生死。",
        "from": "T47n1970_002:0258a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次入菩薩地。",
        "from": "T47n1970_002:0258a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了生死者。",
        "from": "T47n1970_002:0258a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃生死自如也。",
        "from": "T47n1970_002:0258a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入菩薩地者。",
        "from": "T47n1970_002:0258a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內則修慧。",
        "from": "T47n1970_002:0258a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外則修福也。",
        "from": "T47n1970_002:0258a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修慧者。",
        "from": "T47n1970_002:0258a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便慧性日廣。",
        "from": "T47n1970_002:0258a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一日至成佛時。",
        "from": "T47n1970_002:0258a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則慧性含虛空世界。",
        "from": "T47n1970_002:0258a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所不知。",
        "from": "T47n1970_002:0258a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所不見也。",
        "from": "T47n1970_002:0258a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修福者。",
        "from": "T47n1970_002:0258a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃託生於一切眾生中。",
        "from": "T47n1970_002:0258a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同其形體。",
        "from": "T47n1970_002:0258a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通其語言。",
        "from": "T47n1970_002:0258a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以設教化。",
        "from": "T47n1970_002:0258a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故上自天帝下至微細虫蟻。",
        "from": "T47n1970_002:0258a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆託生於其中。",
        "from": "T47n1970_002:0258a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此無量無數劫來設化眾生。",
        "from": "T47n1970_002:0258a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫設化眾生者。",
        "from": "T47n1970_002:0258a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非得福。",
        "from": "T47n1970_002:0258a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得福而不受用。",
        "from": "T47n1970_002:0258a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故其福愈積而愈大。",
        "from": "T47n1970_002:0258a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久則遍於虛空世界矣。",
        "from": "T47n1970_002:0258a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福大則威神大。",
        "from": "T47n1970_002:0258a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如世人官大則勢力大。",
        "from": "T47n1970_002:0258a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以威神無所不可。",
        "from": "T47n1970_002:0258a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方得成就所願而入佛位。",
        "from": "T47n1970_002:0258a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是初發願以至成佛。",
        "from": "T47n1970_002:0258a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非為眾生者。",
        "from": "T47n1970_002:0258a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故人至信向念其名號。",
        "from": "T47n1970_002:0258a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世必蒙福祐。",
        "from": "T47n1970_002:0258a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身後必徑生極樂世界。",
        "from": "T47n1970_002:0258a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能精心想其形相。",
        "from": "T47n1970_002:0258a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世必見佛之真身。",
        "from": "T47n1970_002:0258a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛之威靈無所不在。",
        "from": "T47n1970_002:0258a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而人心念與佛純熟。",
        "from": "T47n1970_002:0258a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則自然交通。",
        "from": "T47n1970_002:0258a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故佛現其身也。",
        "from": "T47n1970_002:0258a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詳見第五卷。",
        "from": "T47n1970_002:0258a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土總要四",
        "from": "T47n1970_002:0258a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T47n1970_002:0258a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛歷大阿僧祇劫行菩薩行。",
        "from": "T47n1970_002:0258a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍力成就不計眾苦。",
        "from": "T47n1970_002:0258a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以和顏愛語饒益眾生。",
        "from": "T47n1970_002:0258a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善護口業不譏他過。",
        "from": "T47n1970_002:0258a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善護身業不失律儀。",
        "from": "T47n1970_002:0258a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善護意業清淨無染。",
        "from": "T47n1970_002:0258a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手中常出一切衣服一切飲食一切幢幡寶蓋一切音樂及一切最上所須之物。",
        "from": "T47n1970_002:0258a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此施惠眾生。",
        "from": "T47n1970_002:0258a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令生歡悅。",
        "from": "T47n1970_002:0258a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以行教化。",
        "from": "T47n1970_002:0258a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故致無量無數眾生發無上菩提心。",
        "from": "T47n1970_002:0258a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是善行無量無邊。",
        "from": "T47n1970_002:0258a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說不能盡。",
        "from": "T47n1970_002:0258a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷無量無數百千萬億劫。",
        "from": "T47n1970_002:0258a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德圓滿威神熾盛。",
        "from": "T47n1970_002:0258a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方得成就所願而入佛位。",
        "from": "T47n1970_002:0258a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以十方無央數世界諸天人民。",
        "from": "T47n1970_002:0258a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至蜎飛蠕動之類。",
        "from": "T47n1970_002:0258a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所不度。",
        "from": "T47n1970_002:0258b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以一念歸依。",
        "from": "T47n1970_002:0258b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂生其國。",
        "from": "T47n1970_002:0258b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆於七寶池蓮華中化生。",
        "from": "T47n1970_002:0258b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然長大。",
        "from": "T47n1970_002:0258b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無乳養之者。",
        "from": "T47n1970_002:0258b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆食自然之食。",
        "from": "T47n1970_002:0258b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其容貌形色端明淨好。",
        "from": "T47n1970_002:0258b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固非世人可比。",
        "from": "T47n1970_002:0258b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非天人可比。",
        "from": "T47n1970_002:0258b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆受自然清靈之身無極之壽。",
        "from": "T47n1970_002:0258b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍彼剎中皆諸上善人無有婦女。",
        "from": "T47n1970_002:0258b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆壽命無央數劫。",
        "from": "T47n1970_002:0258b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆洞視徹聽。",
        "from": "T47n1970_002:0258b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙相瞻見。",
        "from": "T47n1970_002:0258b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙相聞語聲。",
        "from": "T47n1970_002:0258b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆求善道者。",
        "from": "T47n1970_002:0258b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無復異人也。",
        "from": "T47n1970_002:0258b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖歷萬劫。",
        "from": "T47n1970_002:0258b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已所從來靡不知之復知十方世界去來現在之事。",
        "from": "T47n1970_002:0258b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復知無央數天上天下人民以至蜎飛蠕動之類。",
        "from": "T47n1970_002:0258b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心所欲念。",
        "from": "T47n1970_002:0258b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口所欲言。",
        "from": "T47n1970_002:0258b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復知此等眾生當於何劫何歲盡度脫為人。",
        "from": "T47n1970_002:0258b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得生極樂世界。",
        "from": "T47n1970_002:0258b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其慧性通徹故爾。",
        "from": "T47n1970_002:0258b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土總要五",
        "from": "T47n1970_002:0258b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土傳云。",
        "from": "T47n1970_002:0258b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛與觀音勢至二菩薩。",
        "from": "T47n1970_002:0258b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘大願船泛生死海。",
        "from": "T47n1970_002:0258b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就此娑婆世界。",
        "from": "T47n1970_002:0258b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼引眾生上大願船。",
        "from": "T47n1970_002:0258b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "送至西方。",
        "from": "T47n1970_002:0258b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如肯往者無不得生也。",
        "from": "T47n1970_002:0258b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀此則是與菩薩憫念眾生沈淪苦海無由得出故。",
        "from": "T47n1970_002:0258b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自以誓威力招誘人生淨土。",
        "from": "T47n1970_002:0258b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如舟人招誘行人登舟送至彼岸也。",
        "from": "T47n1970_002:0258b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人唯恐不信耳。",
        "from": "T47n1970_002:0258b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若信心肯往。",
        "from": "T47n1970_002:0258b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有罪惡。",
        "from": "T47n1970_002:0258b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無不得生。",
        "from": "T47n1970_002:0258b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋佛不可以凡人比。",
        "from": "T47n1970_002:0258b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡人不為勢利不與人交。",
        "from": "T47n1970_002:0258b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有益於己不與人交。",
        "from": "T47n1970_002:0258b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所以為凡人也。",
        "from": "T47n1970_002:0258b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢人君子已不如此。",
        "from": "T47n1970_002:0258b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於佛乎。",
        "from": "T47n1970_002:0258b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋不慈悲不足為佛。",
        "from": "T47n1970_002:0258b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不濟度眾生不足為佛。",
        "from": "T47n1970_002:0258b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不有大威力不足為佛。",
        "from": "T47n1970_002:0258b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為其慈悲故見眾生沈於苦海而欲濟度。",
        "from": "T47n1970_002:0258b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為其有大威力故能遂濟度之心成濟度之功。",
        "from": "T47n1970_002:0258b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所以為佛也。",
        "from": "T47n1970_002:0258b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T47n1970_002:0258b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大醫王能治一切病。",
        "from": "T47n1970_002:0258b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能治命盡之人。",
        "from": "T47n1970_002:0258b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛能度一切眾生。",
        "from": "T47n1970_002:0258b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能度一切不信之人。",
        "from": "T47n1970_002:0258b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不信比命盡者可謂極矣。",
        "from": "T47n1970_002:0258c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋信者一念也。",
        "from": "T47n1970_002:0258c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人在生時。",
        "from": "T47n1970_002:0258c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心念要去。",
        "from": "T47n1970_002:0258c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身則隨去。",
        "from": "T47n1970_002:0258c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心念欲住。",
        "from": "T47n1970_002:0258c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身則隨住。",
        "from": "T47n1970_002:0258c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是身常隨念。",
        "from": "T47n1970_002:0258c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然猶有念欲去而身被牽繫者。",
        "from": "T47n1970_002:0258c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身壞時唯一念而已。",
        "from": "T47n1970_002:0258c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念到處則無不到。",
        "from": "T47n1970_002:0258c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以一念在淨土則必生淨土。",
        "from": "T47n1970_002:0258c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況佛與菩薩又招引人往生乎。",
        "from": "T47n1970_002:0258c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土總要六",
        "from": "T47n1970_002:0258c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛有誓願云。",
        "from": "T47n1970_002:0258c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已生我國欲往生他方者。",
        "from": "T47n1970_002:0258c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其所願永不復墜三惡道。",
        "from": "T47n1970_002:0258c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何則生淨土者必證無生法忍。",
        "from": "T47n1970_002:0258c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且無生法忍者。",
        "from": "T47n1970_002:0258c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃了生死者。",
        "from": "T47n1970_002:0258c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖入生死界中。",
        "from": "T47n1970_002:0258c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一性已不昧矣。",
        "from": "T47n1970_002:0258c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一性既不昧。",
        "from": "T47n1970_002:0258c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何由而為惡乎。",
        "from": "T47n1970_002:0258c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論其理固無墜墮。",
        "from": "T47n1970_002:0258c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況又仗佛力故墜墮必無。",
        "from": "T47n1970_002:0258c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以生淨土者非徒長生不老。",
        "from": "T47n1970_002:0258c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又生死自如故。",
        "from": "T47n1970_002:0258c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲設化一切眾生而入一切眾生生死界中。",
        "from": "T47n1970_002:0258c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而吾之真性常湛然明朗。",
        "from": "T47n1970_002:0258c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復惑於外物。",
        "from": "T47n1970_002:0258c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復牽於業緣。",
        "from": "T47n1970_002:0258c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖在輪迴世界。",
        "from": "T47n1970_002:0258c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無復輪迴。",
        "from": "T47n1970_002:0258c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂出世間者是也。",
        "from": "T47n1970_002:0258c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂雖在世間而出世間矣。",
        "from": "T47n1970_002:0258c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故生淨土而生死自如者。",
        "from": "T47n1970_002:0258c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生天上亦可。",
        "from": "T47n1970_002:0258c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生人間亦可。",
        "from": "T47n1970_002:0258c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生大富貴中亦可。",
        "from": "T47n1970_002:0258c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生清淨中亦可。",
        "from": "T47n1970_002:0258c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲長生不滅亦可。",
        "from": "T47n1970_002:0258c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲滅而復生亦可。",
        "from": "T47n1970_002:0258c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所欲無不自在。",
        "from": "T47n1970_002:0258c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所以貴於修淨土也。",
        "from": "T47n1970_002:0258c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人不知此理。",
        "from": "T47n1970_002:0258c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徒為生死所苦。",
        "from": "T47n1970_002:0258c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生富貴中反生於貧賤。",
        "from": "T47n1970_002:0258c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生快樂中反生於愁慼。",
        "from": "T47n1970_002:0258c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生而長壽反生而夭促。",
        "from": "T47n1970_002:0258c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生於善道反生於惡趣。",
        "from": "T47n1970_002:0258c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種皆外物所惑。",
        "from": "T47n1970_002:0258c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業緣所牽。",
        "from": "T47n1970_002:0258c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得自在。",
        "from": "T47n1970_002:0258c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以無始劫來輪迴六道不得出離。",
        "from": "T47n1970_002:0258c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當念此等憂苦迴心淨土。",
        "from": "T47n1970_002:0258c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以名極樂世界者。",
        "from": "T47n1970_002:0258c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其意可見矣。",
        "from": "T47n1970_002:0258c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土總要七",
        "from": "T47n1970_002:0258c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無為楊傑次公少登高科。",
        "from": "T47n1970_002:0259a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明禪門宗旨。",
        "from": "T47n1970_002:0259a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂眾生根有利鈍。",
        "from": "T47n1970_002:0259a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即其近而易知簡而易行。",
        "from": "T47n1970_002:0259a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯西方淨土。",
        "from": "T47n1970_002:0259a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但一心觀念仗佛願力直生安養。",
        "from": "T47n1970_002:0259a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為王敏仲作直指淨土決疑序云。",
        "from": "T47n1970_002:0259a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛光明如大圓月。",
        "from": "T47n1970_002:0259a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照十方。",
        "from": "T47n1970_002:0259a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水清而淨則月現全體。",
        "from": "T47n1970_002:0259a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月非[起-巳+孚]水而遽來。",
        "from": "T47n1970_002:0259a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水濁而動則月無定光。",
        "from": "T47n1970_002:0259a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月非捨水而遽去。",
        "from": "T47n1970_002:0259a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在水則有清濁動靜。",
        "from": "T47n1970_002:0259a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在月則無取捨去來。",
        "from": "T47n1970_002:0259a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故華嚴經載解脫長者。",
        "from": "T47n1970_002:0259a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予云。",
        "from": "T47n1970_002:0259a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知一切佛猶如影像。",
        "from": "T47n1970_002:0259a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心如水。",
        "from": "T47n1970_002:0259a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來不來至此。",
        "from": "T47n1970_002:0259a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若欲見安樂世界。",
        "from": "T47n1970_002:0259a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀如來隨意即見。",
        "from": "T47n1970_002:0259a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知眾生注念定見阿彌陀。",
        "from": "T47n1970_002:0259a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生彼土則無諸苦。",
        "from": "T47n1970_002:0259a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般舟三昧經云。",
        "from": "T47n1970_002:0259a12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跋陀和菩薩問釋迦佛云。",
        "from": "T47n1970_002:0259a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來眾生云何得見十方諸佛。",
        "from": "T47n1970_002:0259a13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教令念阿彌陀佛即見十方一切諸佛。",
        "from": "T47n1970_002:0259a14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又大寶積經云。",
        "from": "T47n1970_002:0259a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若他方眾生聞無量壽如來名號。",
        "from": "T47n1970_002:0259a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至能發一念淨信。",
        "from": "T47n1970_002:0259a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜愛樂。",
        "from": "T47n1970_002:0259a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有善根迴向願生其國者。",
        "from": "T47n1970_002:0259a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨願往生得不退轉。",
        "from": "T47n1970_002:0259a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆佛言也。",
        "from": "T47n1970_002:0259a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信佛言。",
        "from": "T47n1970_002:0259a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何言可信。",
        "from": "T47n1970_002:0259a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生淨土。",
        "from": "T47n1970_002:0259a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何土可生。",
        "from": "T47n1970_002:0259a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東坡云。",
        "from": "T47n1970_002:0259a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次公晚年作鹽司大守。",
        "from": "T47n1970_002:0259a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常畫丈六阿彌陀佛像。",
        "from": "T47n1970_002:0259a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨行供養觀念。",
        "from": "T47n1970_002:0259a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至壽終時。",
        "from": "T47n1970_002:0259a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感佛來迎。",
        "from": "T47n1970_002:0259a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐而化。",
        "from": "T47n1970_002:0259a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍舒增廣淨土文卷之二(終)",
        "from": "T47n1970_002:0259a22_0",
        "context_with_next_sentence": false
    }
]