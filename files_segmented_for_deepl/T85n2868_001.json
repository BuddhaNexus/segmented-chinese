[
    {
        "source_sentence": "佛說決罪福經卷上",
        "from": "T85n2868_001:1328b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明師守□□□□□□□□□□□□□□自濟度命應早□□□□□□□□□□□□命也。",
        "from": "T85n2868_001:1328b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天之精人之命也。",
        "from": "T85n2868_001:1328b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□□□□□壽也。",
        "from": "T85n2868_001:1328b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益燒香然燈為益。",
        "from": "T85n2868_001:1328b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命施□□□□□綵幡五丈三枚。",
        "from": "T85n2868_001:1328b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自上名字著幡上。",
        "from": "T85n2868_001:1328b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以五丈者。",
        "from": "T85n2868_001:1328b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用人犯五戒有五罪故。",
        "from": "T85n2868_001:1328b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故五丈也。",
        "from": "T85n2868_001:1328b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以三枚者。",
        "from": "T85n2868_001:1328b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用救三惡道有三尊來出三界故。",
        "from": "T85n2868_001:1328c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪大難救者。",
        "from": "T85n2868_001:1328c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作七味飲食飯諸聖眾具三法衣。",
        "from": "T85n2868_001:1328c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持齋戒七日。",
        "from": "T85n2868_001:1328c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日三過自責已過身口意所行。",
        "from": "T85n2868_001:1328c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自歸三尊奉持八佛名。",
        "from": "T85n2868_001:1328c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受燒香散花燃燈供養。",
        "from": "T85n2868_001:1328c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具滿七日布恩種德。",
        "from": "T85n2868_001:1328c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈心眾生養育窮志。",
        "from": "T85n2868_001:1328c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若與清淨道士。",
        "from": "T85n2868_001:1328c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得增壽除滅宿罪。",
        "from": "T85n2868_001:1328c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應為縣官水火所中亡失財產者。",
        "from": "T85n2868_001:1328c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當齋戒自責本罪。",
        "from": "T85n2868_001:1328c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速立福施用當滅之。",
        "from": "T85n2868_001:1328c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一若滅滿再至三。",
        "from": "T85n2868_001:1328c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪即消滅。",
        "from": "T85n2868_001:1328c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又當隨師教勅不當疑師。",
        "from": "T85n2868_001:1328c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師深入經藏。",
        "from": "T85n2868_001:1328c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以生死常意度量師也。",
        "from": "T85n2868_001:1328c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人師法大難。",
        "from": "T85n2868_001:1328c10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師為重任亦為保證。",
        "from": "T85n2868_001:1328c10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得隨弟子低仰令失道法。",
        "from": "T85n2868_001:1328c11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世不利死入地獄。",
        "from": "T85n2868_001:1328c12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是為縱人作罪。",
        "from": "T85n2868_001:1328c12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為無大慈。",
        "from": "T85n2868_001:1328c12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為不示人大明。",
        "from": "T85n2868_001:1328c13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為不救人之命。",
        "from": "T85n2868_001:1328c13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人作德亡失壽命。",
        "from": "T85n2868_001:1328c13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是師過。",
        "from": "T85n2868_001:1328c14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師教弟子。",
        "from": "T85n2868_001:1328c14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不隨師教不信不受。",
        "from": "T85n2868_001:1328c14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後日弟子死入地獄。",
        "from": "T85n2868_001:1328c15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖欲引師天神證之。",
        "from": "T85n2868_001:1328c15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師教不行。",
        "from": "T85n2868_001:1328c16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人自作罪了不豫師事。",
        "from": "T85n2868_001:1328c16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法菩薩白佛言。",
        "from": "T85n2868_001:1328c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊佛泥洹後當五亂世。",
        "from": "T85n2868_001:1328c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者人民亂。",
        "from": "T85n2868_001:1328c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者王道亂。",
        "from": "T85n2868_001:1328c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者鬼神亂。",
        "from": "T85n2868_001:1328c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者人心憂怖亂。",
        "from": "T85n2868_001:1328c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者道法亂。",
        "from": "T85n2868_001:1328c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當爾之時四輩弟子用法。",
        "from": "T85n2868_001:1328c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何能獲度世不。",
        "from": "T85n2868_001:1328c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告慧法。",
        "from": "T85n2868_001:1328c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當爾之時四部弟子。",
        "from": "T85n2868_001:1328c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆志弱戒羸。",
        "from": "T85n2868_001:1328c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不守根門放咨六情。",
        "from": "T85n2868_001:1328c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散心亂意雜學外經。",
        "from": "T85n2868_001:1328c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口腹辭煩。",
        "from": "T85n2868_001:1328c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心穢行貧競求華名。",
        "from": "T85n2868_001:1328c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色色相遂。",
        "from": "T85n2868_001:1328c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富富相從。",
        "from": "T85n2868_001:1328c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄澄行安。",
        "from": "T85n2868_001:1328c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不存道口說雜語。",
        "from": "T85n2868_001:1328c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾欲迷心眾熊自隨。",
        "from": "T85n2868_001:1328c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言行相違。",
        "from": "T85n2868_001:1328c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死詣太山宮。",
        "from": "T85n2868_001:1328c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪福已定。",
        "from": "T85n2868_001:1328c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將欲自悔不肯聽之。",
        "from": "T85n2868_001:1328c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入三塗者眾。",
        "from": "T85n2868_001:1328c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲人者少。",
        "from": "T85n2868_001:1328c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法白佛言。",
        "from": "T85n2868_001:1328c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四部弟子。",
        "from": "T85n2868_001:1328c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懆繞穢濁。",
        "from": "T85n2868_001:1328c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濁翳不聰。",
        "from": "T85n2868_001:1328c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈中人師云何救人。",
        "from": "T85n2868_001:1328c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能得佛意也。",
        "from": "T85n2868_001:1328c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即不得佛意。",
        "from": "T85n2868_001:1328c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不能致下天神。",
        "from": "T85n2868_001:1329a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常不能自度。",
        "from": "T85n2868_001:1329a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安能度人。",
        "from": "T85n2868_001:1329a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告慧法。",
        "from": "T85n2868_001:1329a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時眾生求佛者多。",
        "from": "T85n2868_001:1329a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如眾星。",
        "from": "T85n2868_001:1329a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得道者少。",
        "from": "T85n2868_001:1329a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能持戒守道者猶如日月。",
        "from": "T85n2868_001:1329a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破我法者。",
        "from": "T85n2868_001:1329a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我弟子。",
        "from": "T85n2868_001:1329a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非他人也。",
        "from": "T85n2868_001:1329a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食行步生起服飾故。",
        "from": "T85n2868_001:1329a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與世間人無有異也。",
        "from": "T85n2868_001:1329a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天不樂不復降屈。",
        "from": "T85n2868_001:1329a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災乘流行。",
        "from": "T85n2868_001:1329a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水草不調五穀不收。",
        "from": "T85n2868_001:1329a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梨庶飢覲。",
        "from": "T85n2868_001:1329a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水穀不滋。",
        "from": "T85n2868_001:1329a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食之無味。",
        "from": "T85n2868_001:1329a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面無精光。",
        "from": "T85n2868_001:1329a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民多疾病。",
        "from": "T85n2868_001:1329a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹腸不和。",
        "from": "T85n2868_001:1329a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸躬惡鬼因衰病之。",
        "from": "T85n2868_001:1329a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂便卜解諸禱神秡。",
        "from": "T85n2868_001:1329a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛羊雞豚酒腩[月*(癸-天+示)]腏。",
        "from": "T85n2868_001:1329a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魎魍鬼神因得飯食隨行入出。",
        "from": "T85n2868_001:1329a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變其身形作死者像。",
        "from": "T85n2868_001:1329a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假託名字。",
        "from": "T85n2868_001:1329a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因其衰耗病人示小。",
        "from": "T85n2868_001:1329a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時殺人。",
        "from": "T85n2868_001:1329a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耗人寂居所向不利。",
        "from": "T85n2868_001:1329a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人終不自知行違佛教謂事佛已。",
        "from": "T85n2868_001:1329a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及更衰食。",
        "from": "T85n2868_001:1329a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知行違所致。",
        "from": "T85n2868_001:1329a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能自責反怨天神。",
        "from": "T85n2868_001:1329a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止不作善禱羊祠祀。",
        "from": "T85n2868_001:1329a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽不全命死入地獄。",
        "from": "T85n2868_001:1329a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有守戒如法修行。",
        "from": "T85n2868_001:1329a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不隨沈浮。",
        "from": "T85n2868_001:1329a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正身執行法服少欲。",
        "from": "T85n2868_001:1329a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能行四等心愍念十方人。",
        "from": "T85n2868_001:1329a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆大菩薩也。",
        "from": "T85n2868_001:1329a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖在衰亂之世故有是輩。",
        "from": "T85n2868_001:1329a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真人處處教化。",
        "from": "T85n2868_001:1329a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由有是人萬民各得馳詣諮受聖化。",
        "from": "T85n2868_001:1329a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠地獄行求度世道。",
        "from": "T85n2868_001:1329a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是守行之人則能豫知吉凶。",
        "from": "T85n2868_001:1329a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天神語之不得自大言。",
        "from": "T85n2868_001:1329a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天神來與我語來。",
        "from": "T85n2868_001:1329a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得道者皆當有病者知為宿罪所致。",
        "from": "T85n2868_001:1329a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當自滅之。",
        "from": "T85n2868_001:1329a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成我法者是我弟子。",
        "from": "T85n2868_001:1329a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破我法者是我弟子。",
        "from": "T85n2868_001:1329a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實非他人也。",
        "from": "T85n2868_001:1329a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法白佛言。",
        "from": "T85n2868_001:1329a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後世人民及諸弟子。",
        "from": "T85n2868_001:1329a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行違禮戒天災運行。",
        "from": "T85n2868_001:1329a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生受殃。",
        "from": "T85n2868_001:1329a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛當奈何。",
        "from": "T85n2868_001:1329a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由師不明教戒不功。",
        "from": "T85n2868_001:1329a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如佛語故使爾耳。",
        "from": "T85n2868_001:1329a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告慧法。",
        "from": "T85n2868_001:1329a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝語無異。",
        "from": "T85n2868_001:1329a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有明師教戒男女。",
        "from": "T85n2868_001:1329a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣佛正法教戒人民。",
        "from": "T85n2868_001:1329a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習學者眾。",
        "from": "T85n2868_001:1329a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾共誹之。",
        "from": "T85n2868_001:1329a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或憎嫉之。",
        "from": "T85n2868_001:1329a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今佛法衰落正教隱弊。",
        "from": "T85n2868_001:1329a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無長益。",
        "from": "T85n2868_001:1329a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛法中大魔令法毀壞。",
        "from": "T85n2868_001:1329a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法白佛言。",
        "from": "T85n2868_001:1329a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復末世時師法不明。",
        "from": "T85n2868_001:1329a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可止不學佛法耶。",
        "from": "T85n2868_001:1329b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告慧法。",
        "from": "T85n2868_001:1329b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人身難得。",
        "from": "T85n2868_001:1329b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經道難聞。",
        "from": "T85n2868_001:1329b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當遠求明師。",
        "from": "T85n2868_001:1329b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從受五戒。",
        "from": "T85n2868_001:1329b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈孝奉事給與衣食。",
        "from": "T85n2868_001:1329b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病給醫藥。",
        "from": "T85n2868_001:1329b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香花燈明無令乏少。",
        "from": "T85n2868_001:1329b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六齋順命可從得福得道得果。",
        "from": "T85n2868_001:1329b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法白佛言。",
        "from": "T85n2868_001:1329b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲受戒法當須行入經律清淨。",
        "from": "T85n2868_001:1329b05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明師善能通知佛言教者。",
        "from": "T85n2868_001:1329b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T85n2868_001:1329b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師者猶父。",
        "from": "T85n2868_001:1329b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父健事官得中徹噠。",
        "from": "T85n2868_001:1329b06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公卿及二千石諸家宗親。",
        "from": "T85n2868_001:1329b07_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中外眷屬莫不蒙榮。",
        "from": "T85n2868_001:1329b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戶口所受郡縣小吏不敢嬈近。",
        "from": "T85n2868_001:1329b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若子犯罪皆除滅之。",
        "from": "T85n2868_001:1329b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況常人耶。",
        "from": "T85n2868_001:1329b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法亦爾。",
        "from": "T85n2868_001:1329b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師之戒淨疾得作佛。",
        "from": "T85n2868_001:1329b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子蒙光除重就輕。",
        "from": "T85n2868_001:1329b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒越三惡超度無量。",
        "from": "T85n2868_001:1329b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如國王第一太子起就高位。",
        "from": "T85n2868_001:1329b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與民庶小吏同也。",
        "from": "T85n2868_001:1329b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2868_001:1329b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是。",
        "from": "T85n2868_001:1329b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所語無有異也。",
        "from": "T85n2868_001:1329b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法菩薩白佛言。",
        "from": "T85n2868_001:1329b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T85n2868_001:1329b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或病或衰。",
        "from": "T85n2868_001:1329b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有縣官事。",
        "from": "T85n2868_001:1329b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為宿罪所追。",
        "from": "T85n2868_001:1329b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲悔過求救。",
        "from": "T85n2868_001:1329b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或欲求後世福報。",
        "from": "T85n2868_001:1329b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以花香財寶衣服以用布施。",
        "from": "T85n2868_001:1329b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若繒綵幡蓋上佛求福。",
        "from": "T85n2868_001:1329b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧復持戒道士耶。",
        "from": "T85n2868_001:1329b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為隨意所喜兮。",
        "from": "T85n2868_001:1329b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2868_001:1329b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我還問汝。",
        "from": "T85n2868_001:1329b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝隨意答。",
        "from": "T85n2868_001:1329b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我譬如大國王。",
        "from": "T85n2868_001:1329b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王有數子。",
        "from": "T85n2868_001:1329b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太子以下皆悉不肖。",
        "from": "T85n2868_001:1329b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯窮小子聰明慈仁。",
        "from": "T85n2868_001:1329b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王百年後國當付誰。",
        "from": "T85n2868_001:1329b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法對曰。",
        "from": "T85n2868_001:1329b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與小子。",
        "from": "T85n2868_001:1329b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所任重故。",
        "from": "T85n2868_001:1329b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不肖子者不能為國重任。",
        "from": "T85n2868_001:1329b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2868_001:1329b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦羅越王財富無量。",
        "from": "T85n2868_001:1329b22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家有數十子。",
        "from": "T85n2868_001:1329b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長子小子皆悉不肖。",
        "from": "T85n2868_001:1329b23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中子黠慧慈仁孝順。",
        "from": "T85n2868_001:1329b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財藏內門戶當付與誰。",
        "from": "T85n2868_001:1329b24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法白佛言。",
        "from": "T85n2868_001:1329b24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不肖子者破壞門戶。",
        "from": "T85n2868_001:1329b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可任信。",
        "from": "T85n2868_001:1329b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必持父母財寶向不肖地用之。",
        "from": "T85n2868_001:1329b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不益父母。",
        "from": "T85n2868_001:1329b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2868_001:1329b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是。",
        "from": "T85n2868_001:1329b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我法中亦復如是。",
        "from": "T85n2868_001:1329b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T85n2868_001:1329b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲布施幡綵花蓋衣服珍寶財貨。",
        "from": "T85n2868_001:1329b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪當得清淨。",
        "from": "T85n2868_001:1329b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒持入律道士最急給乃成福德。",
        "from": "T85n2868_001:1329b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃墮三尊地。",
        "from": "T85n2868_001:1329b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與不持戒者便不成福德。",
        "from": "T85n2868_001:1329c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用飲食或欲意用之。",
        "from": "T85n2868_001:1329c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身合不肖飲噉不時。",
        "from": "T85n2868_001:1329c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不念施家。",
        "from": "T85n2868_001:1329c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自廢身口妻子之分。",
        "from": "T85n2868_001:1329c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛法故布施道人。",
        "from": "T85n2868_001:1329c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然道人不惟佛恩受人信施。",
        "from": "T85n2868_001:1329c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身得財利。",
        "from": "T85n2868_001:1329c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不計罪福不時用之。",
        "from": "T85n2868_001:1329c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又徹神明不得大富。",
        "from": "T85n2868_001:1329c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非為無福也。",
        "from": "T85n2868_001:1329c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧法菩薩白佛言。",
        "from": "T85n2868_001:1329c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T85n2868_001:1329c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為鬼所病。",
        "from": "T85n2868_001:1329c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若呼沙門讀經。",
        "from": "T85n2868_001:1329c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為從意所好將須清淨耶。",
        "from": "T85n2868_001:1329c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2868_001:1329c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益須清淨。",
        "from": "T85n2868_001:1329c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能除伏諸魔鬼耳。",
        "from": "T85n2868_001:1329c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須至心。",
        "from": "T85n2868_001:1329c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛時時頭痛。",
        "from": "T85n2868_001:1329c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼舍利弗為我讀經。",
        "from": "T85n2868_001:1329c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時大迦葉白佛言。",
        "from": "T85n2868_001:1329c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經本從佛聞受。",
        "from": "T85n2868_001:1329c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗所不知。",
        "from": "T85n2868_001:1329c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不及佛一毛之智。",
        "from": "T85n2868_001:1329c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何反更為佛說經。",
        "from": "T85n2868_001:1329c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉。",
        "from": "T85n2868_001:1329c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲聞經。",
        "from": "T85n2868_001:1329c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我身甚極苦。",
        "from": "T85n2868_001:1329c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗速來為我說經。",
        "from": "T85n2868_001:1329c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若我度世後。",
        "from": "T85n2868_001:1329c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸弟子等失於覆護。",
        "from": "T85n2868_001:1329c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得道者皆在魔界。",
        "from": "T85n2868_001:1329c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當為魔所饒。",
        "from": "T85n2868_001:1329c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不欲令諸弟子共相輕易賤慢經法故也。",
        "from": "T85n2868_001:1329c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決罪福經卷上",
        "from": "T85n2868_001:1329c16_0",
        "context_with_next_sentence": false
    }
]