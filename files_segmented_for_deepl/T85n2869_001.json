[
    {
        "source_sentence": "佛說妙好寶車經",
        "from": "T85n2869_001:1333c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世時有一□□□□□□□□□□□□□菩薩言。",
        "from": "T85n2869_001:1333c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫一切萬民□□□□□□□□□切獄囚思得出不。",
        "from": "T85n2869_001:1333c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切病人思得差不。",
        "from": "T85n2869_001:1333c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人在闇思見明不。",
        "from": "T85n2869_001:1333c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如慈母思見子不。",
        "from": "T85n2869_001:1334a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如遠行思早歸不。",
        "from": "T85n2869_001:1334a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如寡女思得夫不。",
        "from": "T85n2869_001:1334a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如躄人思得行不。",
        "from": "T85n2869_001:1334a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如貧人思得衣不。",
        "from": "T85n2869_001:1334a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如寒人思得火不。",
        "from": "T85n2869_001:1334a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如耕田思得穀不。",
        "from": "T85n2869_001:1334a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如盲人思見物不。",
        "from": "T85n2869_001:1334a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如聾人思聞聲不。",
        "from": "T85n2869_001:1334a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如啞人思得語不。",
        "from": "T85n2869_001:1334a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種思之念之。",
        "from": "T85n2869_001:1334a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道至尊終不相欺。",
        "from": "T85n2869_001:1334a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語寶車菩薩。",
        "from": "T85n2869_001:1334a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今語汝。",
        "from": "T85n2869_001:1334a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌山南名閻浮提。",
        "from": "T85n2869_001:1334a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西俱耶尼。",
        "from": "T85n2869_001:1334a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北欝單越。",
        "from": "T85n2869_001:1334a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東弗于逮。",
        "from": "T85n2869_001:1334a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是四方眾生皆悉聞知。",
        "from": "T85n2869_001:1334a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲聞者。",
        "from": "T85n2869_001:1334a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如民得王。",
        "from": "T85n2869_001:1334a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如囚出獄。",
        "from": "T85n2869_001:1334a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如病得差。",
        "from": "T85n2869_001:1334a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如闇見明。",
        "from": "T85n2869_001:1334a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如慈母得子。",
        "from": "T85n2869_001:1334a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如遠行人得歸。",
        "from": "T85n2869_001:1334a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寡女得夫。",
        "from": "T85n2869_001:1334a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如譬人得行。",
        "from": "T85n2869_001:1334a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如貧人得衣。",
        "from": "T85n2869_001:1334a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寒人得火。",
        "from": "T85n2869_001:1334a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如耕田人得穀。",
        "from": "T85n2869_001:1334a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如盲人得視。",
        "from": "T85n2869_001:1334a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如聾人得聽。",
        "from": "T85n2869_001:1334a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如啞人得語。",
        "from": "T85n2869_001:1334a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是種種思之念之佛道。",
        "from": "T85n2869_001:1334a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊終不相欺。",
        "from": "T85n2869_001:1334a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車菩薩白佛言。",
        "from": "T85n2869_001:1334a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來壽命為有幾年。",
        "from": "T85n2869_001:1334a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言寶車菩薩。",
        "from": "T85n2869_001:1334a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今壽命不可思議。",
        "from": "T85n2869_001:1334a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巍巍堂堂與日月同年。",
        "from": "T85n2869_001:1334a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日竟夜遶須彌山。",
        "from": "T85n2869_001:1334a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終而復始。",
        "from": "T85n2869_001:1334a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無始亦無原緒。",
        "from": "T85n2869_001:1334a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲聞者。",
        "from": "T85n2869_001:1334a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其事亦難。",
        "from": "T85n2869_001:1334a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法空無所有。",
        "from": "T85n2869_001:1334a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有常住亦無器滅。",
        "from": "T85n2869_001:1334a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如東西及以南北。",
        "from": "T85n2869_001:1334a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非青赤復非白黑。",
        "from": "T85n2869_001:1334a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻如嚮聲捉不可得。",
        "from": "T85n2869_001:1334a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛後寶車菩薩。",
        "from": "T85n2869_001:1334a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今應當教諸眾生。",
        "from": "T85n2869_001:1334a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普皆受持三歸五戒。",
        "from": "T85n2869_001:1334a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十善八齋轉身更生。",
        "from": "T85n2869_001:1334a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡得須陀洹道。",
        "from": "T85n2869_001:1334a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯陀含道。",
        "from": "T85n2869_001:1334a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿那含道。",
        "from": "T85n2869_001:1334a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿羅漢道。",
        "from": "T85n2869_001:1334a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡諸有漏四道具足。",
        "from": "T85n2869_001:1334a24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車菩薩重白佛言。",
        "from": "T85n2869_001:1334a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來在世猶多怨疾。",
        "from": "T85n2869_001:1334a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況滅度後。",
        "from": "T85n2869_001:1334a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有誹謗此經典者。",
        "from": "T85n2869_001:1334a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死入地獄。",
        "from": "T85n2869_001:1334a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉其中無有出期。",
        "from": "T85n2869_001:1334a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛哉痛哉。",
        "from": "T85n2869_001:1334a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛不可言。",
        "from": "T85n2869_001:1334a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今矜於汝等造作此經。",
        "from": "T85n2869_001:1334a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如盲者不見日月。",
        "from": "T85n2869_001:1334a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非日月之咎。",
        "from": "T85n2869_001:1334a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愛時不見愛　　不見愛亦憂　　是以莫造愛　怨曾惡所由　　喜中生於愛　　愛能生於憂　若能斷恩愛　　憂悲即不生　　愛喜生於怨　愛喜生怖畏　　解無貪欲想　　何憂復何畏　諸天宮殿樂　　無邊無有窮　　要當生彼處　有始而無終　　以善為善法　　修善是道場　善行作車牛　　載人入福堂　　以惡為惡法　惡行相縛束　　生時不受戒　　死則入地獄　三歸五戒車　　非是山中木　　得聞寶車經　死不入地獄　　非空非海中　　非入山石間　對至不可避　　會當來相牽　　赤繩縛我肩　黑索繫我咽　　將我何所至　　送至東太山　高山萬餘丈　　絕後極普懸　　乃何千萬歲　以復歸黃泉　　人生譬朝露　　姓命不久長　不信我語者　　但看琢石光　　生難死何異　去不由橋梁　　惶忽五道頭　　解剝衣以裳　手捉七尺棒　　鐵鉤利如芒　　火車忽然至　銅柱及鐵床　　寒氷截人骨　　獄門陽濩湯　使官相對座　　又吏挾兩箱　　皆共治文書　問我生時殃　　事事知何道　　苦痛難可當　奈何天中天　　叵有不死方　　怨戀猶恩愛　謂呼身是常　　世間愚癡人　　或不信此經　譬如未調牛　　曳人東都西　　三歸如車轢　五戒如車轅　　十善作車箱　　八戒作當蘭　直心如車軸　　三明作釭釧　　持戒如車轄　破戒如車轓　　車聰如雙耳　　鉤心如坐禪　方便如車膂　　覆蓋如善權　　佛道作車轂　車輻競來前　　賢者如車網　　法師與魔門　退轉如薛脫　　懺悔打薛堅　　精進作車牛　牽車至梵天　　梵天諸宮殿　　光明皆自然　譬如春花敷　　妙色悅眾心　　如是諸功德　得聞寶車經　　佛道高於天　　福德重於地　寶車大菩薩　　教我作懺悔　　世間愚癡人　不信寶車經　　死墮地獄中　　餓鬼竟來前　牽頭向刀山　　面白如脣青　　不見日月光　但聞打鬼聲　　如是諸苦痛　　幽幽何冥冥　生時不受戒　　事至知何陳　　或有鐵嘴鳥　飛來著兩肩　　低頭啄人舌　　舉頭啄眼精　此人前身時　　齋日惡罵聲　　不肯受師教　佛前作懺悔　　今日受斯罪　　知復何造逮佛言。",
        "from": "T85n2869_001:1334b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T85n2869_001:1334c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於齋日在三尊前。",
        "from": "T85n2869_001:1334c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發露懺悔自悅過咎者罪滅福生。",
        "from": "T85n2869_001:1334c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不經刀山劍樹濩湯盧炭。",
        "from": "T85n2869_001:1334c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不猶三塗受。",
        "from": "T85n2869_001:1334c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若眾生不經八難。",
        "from": "T85n2869_001:1334c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃與諸佛菩薩携手接腕。",
        "from": "T85n2869_001:1334c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天宮殿入中遍觀歡欣快樂。",
        "from": "T85n2869_001:1334c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣成弘願。",
        "from": "T85n2869_001:1334c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語寶車菩薩。",
        "from": "T85n2869_001:1334c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能受持寶車菩薩經者。",
        "from": "T85n2869_001:1334c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設入大海。",
        "from": "T85n2869_001:1334c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如娥押鴛鴦鳳凰在海水中異愕異翔。",
        "from": "T85n2869_001:1334c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人在堂琵琶箏笛歌舞作倡歡忻快樂。",
        "from": "T85n2869_001:1334c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德難量。",
        "from": "T85n2869_001:1334c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如魚鱉在海水中出沒自在不畏虎狼。",
        "from": "T85n2869_001:1334c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如耽幽魍魎。",
        "from": "T85n2869_001:1334c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰敢誰當。",
        "from": "T85n2869_001:1334c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語寶車菩薩。",
        "from": "T85n2869_001:1334c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今應當教諸眾生皆悉聞知。",
        "from": "T85n2869_001:1334c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2869_001:1334c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲度人之法。",
        "from": "T85n2869_001:1334c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其事云何。",
        "from": "T85n2869_001:1334c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車答言。",
        "from": "T85n2869_001:1334c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以手執波若之智炬。",
        "from": "T85n2869_001:1334c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入眾生無明之窟宅。",
        "from": "T85n2869_001:1334c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照善根之華敷。",
        "from": "T85n2869_001:1334c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯解脫之智果。",
        "from": "T85n2869_001:1334c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用忍辱作鎧杖。",
        "from": "T85n2869_001:1334c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執波若之利朔。",
        "from": "T85n2869_001:1334c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善權方便作攻車。",
        "from": "T85n2869_001:1334c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破眾生愚癡之大城。",
        "from": "T85n2869_001:1334c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共五陰魔戰。",
        "from": "T85n2869_001:1334c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊生死軍。",
        "from": "T85n2869_001:1334c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺煩惱賊。",
        "from": "T85n2869_001:1334c27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出陰入界法身道場。",
        "from": "T85n2869_001:1334c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由寶車菩薩威神之刀。",
        "from": "T85n2869_001:1334c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巍巍如是。",
        "from": "T85n2869_001:1334c29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語寶車菩薩。",
        "from": "T85n2869_001:1335a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今應當得阿耨多羅三藐三菩提心。",
        "from": "T85n2869_001:1335a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子善女人。",
        "from": "T85n2869_001:1335a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能受持寶車菩薩經名墮地獄者。",
        "from": "T85n2869_001:1335a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有是處。",
        "from": "T85n2869_001:1335a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2869_001:1335a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘如來力駕波若之大船度眾生。",
        "from": "T85n2869_001:1335a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逕生死之大河。",
        "from": "T85n2869_001:1335a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度煩惱之海岸。",
        "from": "T85n2869_001:1335a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出愛欲之深淵。",
        "from": "T85n2869_001:1335a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越無明之坑坎。",
        "from": "T85n2869_001:1335a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度耽見之惡經。",
        "from": "T85n2869_001:1335a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用忍辱作琢斫琢却六入之杌株。",
        "from": "T85n2869_001:1335a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡耽見之橫根。",
        "from": "T85n2869_001:1335a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却煩惱之葉須。",
        "from": "T85n2869_001:1335a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牽弘誓之大牛。",
        "from": "T85n2869_001:1335a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用智慧作利犁。",
        "from": "T85n2869_001:1335a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破眾生愚癡之荒地。",
        "from": "T85n2869_001:1335a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以隨喜作鏤[金*聚]。",
        "from": "T85n2869_001:1335a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破眾生愚癡之怏伐。",
        "from": "T85n2869_001:1335a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用六度作種子。",
        "from": "T85n2869_001:1335a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散著無極之福田。",
        "from": "T85n2869_001:1335a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用十善作溝渠。",
        "from": "T85n2869_001:1335a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長真實之苗稼。",
        "from": "T85n2869_001:1335a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "磨波若之利鎌。",
        "from": "T85n2869_001:1335a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取涅槃真實果。",
        "from": "T85n2869_001:1335a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牽弘誓之大牛。",
        "from": "T85n2869_001:1335a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "駕三乘之寶車。",
        "from": "T85n2869_001:1335a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運著六通之矩頭。",
        "from": "T85n2869_001:1335a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由八徑之政路。",
        "from": "T85n2869_001:1335a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運總持之蠡束。",
        "from": "T85n2869_001:1335a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積著散雲之道場。",
        "from": "T85n2869_001:1335a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車度人其法如是。",
        "from": "T85n2869_001:1335a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如母得子病　　殺生求魔神　　不得一言福　罪如須彌山　　念人衰老時　　百病同時生　水消如火滅　　刀風解其形　　骨離筋脈絕　大命要當傾　　吾欲畏是故　　求道願福生　唯念老病死　　三界是大患　　福盡而命終　棄之於皇泉　　身爛還歸土　　魂魄隨因緣　吾欲畏是故　　求道勝泥洹　　眼老不見色　看經文字難　　耳老不聞聲　　聽受經法難　鼻老不聞香　　分別香亦難　　口老不能語　說經義亦難　　心老多忘失　　說法解義難　身老不能行　　往取福德難　　今身不受戒　後得為人難　　殺生短命報　　欲求長命難　我殺還我尚　　走避脫亦難　　世間愚癡人　不信寶車經　　放恣著五欲　　行業之所牽　譬如歷養馬　　舉頭看青雲　　但作地獄行　不知念生天　　智者樂福德　　愚者利養身　如馬貪水穀　　好語詠不聽　　展轉鑊湯中　苦痛難可陳　　語我家中人　　欲求過度我　燒香請道人　　不經八難苦　　皆由寶車經　身直影亦直　　身曲影直難　　心直事事直　心曲直事難　　魚鱉隱在海　　掃地求活難　猨猴急依樹　　無樹脫亦難　　人急依於佛　無戒求佛難　　放身自縱恣　　眾魔競來前比丘語寶車。",
        "from": "T85n2869_001:1335a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以不問佛四諦　二因緣本從何處出。",
        "from": "T85n2869_001:1335b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即語寶車。",
        "from": "T85n2869_001:1335b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我出於波羅奈國。",
        "from": "T85n2869_001:1335b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或果從因中生。",
        "from": "T85n2869_001:1335b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因從果中出。",
        "from": "T85n2869_001:1335b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者能安之愚者。",
        "from": "T85n2869_001:1335b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便掘出寶車方便問破三合為一。",
        "from": "T85n2869_001:1335b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘語寶車。",
        "from": "T85n2869_001:1335b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉意宜大兒。",
        "from": "T85n2869_001:1335b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂汝三乘人不識於涅槃輪迴六趣中。",
        "from": "T85n2869_001:1335b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫諸難亦難。",
        "from": "T85n2869_001:1335b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願以方便力引之入涅槃。",
        "from": "T85n2869_001:1335b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘語寶車。",
        "from": "T85n2869_001:1335b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事亦不可知。",
        "from": "T85n2869_001:1335b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粟果成天地。",
        "from": "T85n2869_001:1335b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芥子成須彌。",
        "from": "T85n2869_001:1335b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力得如是。",
        "from": "T85n2869_001:1335b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故號不思議。",
        "from": "T85n2869_001:1335b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車菩薩眷屬千萬億人。",
        "from": "T85n2869_001:1335b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行。",
        "from": "T85n2869_001:1335b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心歸向無有惑也。",
        "from": "T85n2869_001:1335b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛昔在世時。",
        "from": "T85n2869_001:1335b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化作一道人。",
        "from": "T85n2869_001:1335b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣大婆羅門家乞。",
        "from": "T85n2869_001:1335b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門問道人言。",
        "from": "T85n2869_001:1335b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以不田作但行乞食。",
        "from": "T85n2869_001:1335b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人姓何字誰。",
        "from": "T85n2869_001:1335b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍在何許。",
        "from": "T85n2869_001:1335b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑何郡縣。",
        "from": "T85n2869_001:1335b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人言。",
        "from": "T85n2869_001:1335b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾舍在弘水東引水西。",
        "from": "T85n2869_001:1335b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑波若郡本際縣。",
        "from": "T85n2869_001:1335b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓空字無相。",
        "from": "T85n2869_001:1335b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩云然樹下止居超入城絕絇利彼。",
        "from": "T85n2869_001:1335b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門言。",
        "from": "T85n2869_001:1335b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人乃有此業。",
        "from": "T85n2869_001:1335b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以不田作但行乞食。",
        "from": "T85n2869_001:1335b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人答曰。",
        "from": "T85n2869_001:1335b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾田作與卿有異。",
        "from": "T85n2869_001:1335b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以四禪為耕犁。",
        "from": "T85n2869_001:1335b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六度為種子。",
        "from": "T85n2869_001:1335b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散著無極之曠野。",
        "from": "T85n2869_001:1335b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潤以八解之泉水。",
        "from": "T85n2869_001:1335b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長養四實為果報。",
        "from": "T85n2869_001:1335b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鋤以十善為溝薛。",
        "from": "T85n2869_001:1335b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以波若之利鎌。",
        "from": "T85n2869_001:1335b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "束以善權為要附。",
        "from": "T85n2869_001:1335b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積著三乘之大車。",
        "from": "T85n2869_001:1335b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運著無極之大城。",
        "from": "T85n2869_001:1335b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "給與一切之賢士。",
        "from": "T85n2869_001:1335b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧道之田作如此無窮。",
        "from": "T85n2869_001:1335c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以道人說是語次忽然不現。",
        "from": "T85n2869_001:1335c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門即得道迹。",
        "from": "T85n2869_001:1335c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說妙好寶車經一卷",
        "from": "T85n2869_001:1335c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大業十三年。",
        "from": "T85n2869_001:1335c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛弟子張佛果為劉士章善友知識敬造寶車經一卷流通讀誦講說修行。",
        "from": "T85n2869_001:1335c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願藉此大乘弘化之業俱遊勝境履踐妙迹背八邪道歸八正路。",
        "from": "T85n2869_001:1335c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具首楞嚴三昧之力。",
        "from": "T85n2869_001:1335c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲四如意念處功德。",
        "from": "T85n2869_001:1335c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願於將來無量劫中世世生生還共弟子深結善因菩提眷屬發大乘心求摩訶衍。",
        "from": "T85n2869_001:1335c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足智慧神通威德根力覺道皆悉成就。",
        "from": "T85n2869_001:1335c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱修梵行。",
        "from": "T85n2869_001:1335c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同登種覺。",
        "from": "T85n2869_001:1335c11_6",
        "context_with_next_sentence": false
    }
]