[
    {
        "source_sentence": "靈竺淨慈自得禪師錄卷第六",
        "from": "X72n1428_006:0148a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "育王萬庵和尚下火",
        "from": "X72n1428_006:0148a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師舉起火炬曰。",
        "from": "X72n1428_006:0148a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬年一壽靈松下。",
        "from": "X72n1428_006:0148a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菴外玉欄人不到。",
        "from": "X72n1428_006:0148a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這箇性空火裡氷。",
        "from": "X72n1428_006:0148a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今為孰秋容好。",
        "from": "X72n1428_006:0148a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剝却身心向去。",
        "from": "X72n1428_006:0148a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則識蛇撥草歸天上。",
        "from": "X72n1428_006:0148a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及盡功勳轉步。",
        "from": "X72n1428_006:0148a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則心馬著鞭超萬象。",
        "from": "X72n1428_006:0148a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟如何道著去。",
        "from": "X72n1428_006:0148a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赫爍火星飛妙相。",
        "from": "X72n1428_006:0148a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(以火畫圓相擲曰)盡大地中無達者。",
        "from": "X72n1428_006:0148a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂光明土昧真性。",
        "from": "X72n1428_006:0148a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天童古泉和尚下火",
        "from": "X72n1428_006:0148a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師舉起火炬曰。",
        "from": "X72n1428_006:0148a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從古難言火裡清泉。",
        "from": "X72n1428_006:0148a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸佛未曾受傳。",
        "from": "X72n1428_006:0148a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣向位則妙容儼然。",
        "from": "X72n1428_006:0148a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退步機則白日青天。",
        "from": "X72n1428_006:0148a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回互宛轉朗應眾緣。",
        "from": "X72n1428_006:0148a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這箇手段自還古泉和尚。",
        "from": "X72n1428_006:0148a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今臨行一句作麼生道宣。",
        "from": "X72n1428_006:0148a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)十方無別。",
        "from": "X72n1428_006:0148a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世莫遷。",
        "from": "X72n1428_006:0148a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨慈妙正和尚下火",
        "from": "X72n1428_006:0148a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師舉起火炬曰。",
        "from": "X72n1428_006:0148a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理妙一段亘古今。",
        "from": "X72n1428_006:0148a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正偏回互該深心。",
        "from": "X72n1428_006:0148a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢回石女鳴梭夜。",
        "from": "X72n1428_006:0148a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氣愕木人握印晨。",
        "from": "X72n1428_006:0148a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清磨鸞鑒石虎出。",
        "from": "X72n1428_006:0148a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幽景林膠續斷絃。",
        "from": "X72n1428_006:0148b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉龍上碧蘿岑。",
        "from": "X72n1428_006:0148b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這箇作略且置。",
        "from": "X72n1428_006:0148b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今妙正大和尚玉機撥轉一句子。",
        "from": "X72n1428_006:0148b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還有人道得底麼。",
        "from": "X72n1428_006:0148b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火良久曰)秋月連枝璞玉金。",
        "from": "X72n1428_006:0148b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草露沾衣孤客襟。",
        "from": "X72n1428_006:0148b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔣山奇傳和尚下火",
        "from": "X72n1428_006:0148b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師舉起火炬曰。",
        "from": "X72n1428_006:0148b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇特商量今古稀。",
        "from": "X72n1428_006:0148b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳來派脉弄玄微。",
        "from": "X72n1428_006:0148b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知脫體卓然道。",
        "from": "X72n1428_006:0148b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖未曾知此機。",
        "from": "X72n1428_006:0148b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且至這裡。",
        "from": "X72n1428_006:0148b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生也不道。",
        "from": "X72n1428_006:0148b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死也不道。",
        "from": "X72n1428_006:0148b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸人要知落處麼。",
        "from": "X72n1428_006:0148b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)火裡曇華朵朵奇。",
        "from": "X72n1428_006:0148b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芙蓉傑和尚下火",
        "from": "X72n1428_006:0148b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師舉起火炬曰。",
        "from": "X72n1428_006:0148b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉一箇萬人傑。",
        "from": "X72n1428_006:0148b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庵內主翁是妙訣。",
        "from": "X72n1428_006:0148b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君看秋風清夜天。",
        "from": "X72n1428_006:0148b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤輪無垢雲中月。",
        "from": "X72n1428_006:0148b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正恁麼時。",
        "from": "X72n1428_006:0148b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉氣轉位功勳逈絕。",
        "from": "X72n1428_006:0148b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金針照夜線路方別。",
        "from": "X72n1428_006:0148b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還有即今一句也未。",
        "from": "X72n1428_006:0148b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰知火宅中。",
        "from": "X72n1428_006:0148b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)萬里一條鐵。",
        "from": "X72n1428_006:0148b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄本首座下火",
        "from": "X72n1428_006:0148b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄機密轉。",
        "from": "X72n1428_006:0148b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本位廓真。",
        "from": "X72n1428_006:0148b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙明田地。",
        "from": "X72n1428_006:0148b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫外之春。",
        "from": "X72n1428_006:0148b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈照心處。",
        "from": "X72n1428_006:0148b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本法之真。",
        "from": "X72n1428_006:0148b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道是誰分上事。",
        "from": "X72n1428_006:0148b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄本首座平生作略。",
        "from": "X72n1428_006:0148b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今契親一句。",
        "from": "X72n1428_006:0148b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧如何道取去。",
        "from": "X72n1428_006:0148b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)三千里外絕知音。",
        "from": "X72n1428_006:0148b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了照首座下火",
        "from": "X72n1428_006:0148b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了然一句彌滿萬天。",
        "from": "X72n1428_006:0148b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本源真照不受傳也。",
        "from": "X72n1428_006:0148b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太奇兮不可得。",
        "from": "X72n1428_006:0148b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太高生矣不變遷。",
        "from": "X72n1428_006:0148b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到這裡。",
        "from": "X72n1428_006:0148b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道著不道著。",
        "from": "X72n1428_006:0148b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾不言宣。",
        "from": "X72n1428_006:0148b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道了照首座即今行履如何委悉。",
        "from": "X72n1428_006:0148b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)木人擡脚獨駕鐵船。",
        "from": "X72n1428_006:0148b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈仙首座下火",
        "from": "X72n1428_006:0148b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈山一會獨許迦葉。",
        "from": "X72n1428_006:0148c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曹溪路上正得青原。",
        "from": "X72n1428_006:0148c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了玄處付在乾坤。",
        "from": "X72n1428_006:0148c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛正眼自隨脚跟。",
        "from": "X72n1428_006:0148c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道這箇靈仙首座臨行一句如何道著去。",
        "from": "X72n1428_006:0148c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神仙妙訣。",
        "from": "X72n1428_006:0148c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父子不傳。",
        "from": "X72n1428_006:0148c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)風生於孤枕。",
        "from": "X72n1428_006:0148c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香起於返魂。",
        "from": "X72n1428_006:0148c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祐密首座下火",
        "from": "X72n1428_006:0148c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華枯得年開放春。",
        "from": "X72n1428_006:0148c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密傳陽色絕疎親。",
        "from": "X72n1428_006:0148c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樞機密用該功位。",
        "from": "X72n1428_006:0148c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回互傍參屬滿身。",
        "from": "X72n1428_006:0148c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是祐密首座從生至老底[打丁+羕]子。",
        "from": "X72n1428_006:0148c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧有一句子即今相送。",
        "from": "X72n1428_006:0148c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)身如冷氷。",
        "from": "X72n1428_006:0148c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心似松椿。",
        "from": "X72n1428_006:0148c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法真首座下火",
        "from": "X72n1428_006:0148c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法法不隱藏。",
        "from": "X72n1428_006:0148c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古今常顯露。",
        "from": "X72n1428_006:0148c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應真絕比倫。",
        "from": "X72n1428_006:0148c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸劫外一路。",
        "from": "X72n1428_006:0148c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是也不諧到。",
        "from": "X72n1428_006:0148c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非也不了悟。",
        "from": "X72n1428_006:0148c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至這裡。",
        "from": "X72n1428_006:0148c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還有隱身處麼。",
        "from": "X72n1428_006:0148c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威音未興前。",
        "from": "X72n1428_006:0148c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾絕却照顧。",
        "from": "X72n1428_006:0148c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法真首座得力一句如何道著。",
        "from": "X72n1428_006:0148c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)山前日暮無來去。",
        "from": "X72n1428_006:0148c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶寶書記下火",
        "from": "X72n1428_006:0148c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶喜撰修多羅藏。",
        "from": "X72n1428_006:0148c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來滅後挑真燈。",
        "from": "X72n1428_006:0148c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定光古佛獨許汝。",
        "from": "X72n1428_006:0148c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾寶光攢佛法僧。",
        "from": "X72n1428_006:0148c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且至這裡。",
        "from": "X72n1428_006:0148c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如如了了。",
        "from": "X72n1428_006:0148c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清清澄澄。",
        "from": "X72n1428_006:0148c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煒煒煌煌。",
        "from": "X72n1428_006:0148c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伯伯登登。",
        "from": "X72n1428_006:0148c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還會麼。",
        "from": "X72n1428_006:0148c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)三世諸佛都難承。",
        "from": "X72n1428_006:0148c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙用書記下火",
        "from": "X72n1428_006:0148c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙用無窮。",
        "from": "X72n1428_006:0148c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬里絕同。",
        "from": "X72n1428_006:0148c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河沙諸佛。",
        "from": "X72n1428_006:0148c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你在口中。",
        "from": "X72n1428_006:0148c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈一幅紙則記得玄沙之家風。",
        "from": "X72n1428_006:0148c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉萬古經則持著阿難之談空。",
        "from": "X72n1428_006:0148c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一清淨眼。",
        "from": "X72n1428_006:0148c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一真如通。",
        "from": "X72n1428_006:0148c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今如何道取。",
        "from": "X72n1428_006:0148c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)凄凄萬谷水。",
        "from": "X72n1428_006:0148c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "颯颯億年松。",
        "from": "X72n1428_006:0148c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵言藏主下火",
        "from": "X72n1428_006:0149a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方婆伽梵。",
        "from": "X72n1428_006:0149a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一路涅槃門。",
        "from": "X72n1428_006:0149a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入得分明者。",
        "from": "X72n1428_006:0149a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須是報佛恩。",
        "from": "X72n1428_006:0149a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大經卷之外。",
        "from": "X72n1428_006:0149a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無二便獨尊。",
        "from": "X72n1428_006:0149a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字字廓通處。",
        "from": "X72n1428_006:0149a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言言付受論。",
        "from": "X72n1428_006:0149a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道梵言藏主轉步底一句子如何道著。",
        "from": "X72n1428_006:0149a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)無限曉潭月。",
        "from": "X72n1428_006:0149a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光分萬里昏。",
        "from": "X72n1428_006:0149a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧明藏主下火",
        "from": "X72n1428_006:0149a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智惠光明照世界。",
        "from": "X72n1428_006:0149a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亘古騰今發清輝。",
        "from": "X72n1428_006:0149a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼藏裡得提起。",
        "from": "X72n1428_006:0149a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四十九年說一機。",
        "from": "X72n1428_006:0149a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是慧明藏主平生行履。",
        "from": "X72n1428_006:0149a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今轉身處曾有一句麼。",
        "from": "X72n1428_006:0149a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)寶劒霜刃。",
        "from": "X72n1428_006:0149a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逢知人稀。",
        "from": "X72n1428_006:0149a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗仙菴主下火",
        "from": "X72n1428_006:0149a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗旨之淵源。",
        "from": "X72n1428_006:0149a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仙道秘藥芝。",
        "from": "X72n1428_006:0149a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾不得於父。",
        "from": "X72n1428_006:0149a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都不傳於師。",
        "from": "X72n1428_006:0149a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知之謂之聖。",
        "from": "X72n1428_006:0149a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見之謂之知。",
        "from": "X72n1428_006:0149a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這箇仙庵主。",
        "from": "X72n1428_006:0149a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六十七年裡為吾連理枝。",
        "from": "X72n1428_006:0149a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今捨吾去。",
        "from": "X72n1428_006:0149a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫外得逢伊。",
        "from": "X72n1428_006:0149a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟如何道。",
        "from": "X72n1428_006:0149a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)清秋露如玉。",
        "from": "X72n1428_006:0149a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潭水月沉時。",
        "from": "X72n1428_006:0149a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法遵菴主下火",
        "from": "X72n1428_006:0149a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法從空處起。",
        "from": "X72n1428_006:0149a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人向裡頭參。",
        "from": "X72n1428_006:0149a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遵世之真要。",
        "from": "X72n1428_006:0149a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莧菜之茆菴。",
        "from": "X72n1428_006:0149a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道竪拳之[打丁+羕]子。",
        "from": "X72n1428_006:0149a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一問自清嵐。",
        "from": "X72n1428_006:0149a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今庵中主何處在。",
        "from": "X72n1428_006:0149a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)前三三。",
        "from": "X72n1428_006:0149a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後三三。",
        "from": "X72n1428_006:0149a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞真知客下火",
        "from": "X72n1428_006:0149a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幽洞無涯。",
        "from": "X72n1428_006:0149a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄妙全真。",
        "from": "X72n1428_006:0149a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通身活卓卓。",
        "from": "X72n1428_006:0149a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覿面故親親。",
        "from": "X72n1428_006:0149a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨趣三昧之宅。",
        "from": "X72n1428_006:0149a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自見劫外之春。",
        "from": "X72n1428_006:0149a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這箇是洞真知客平生用底。",
        "from": "X72n1428_006:0149a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨行一句又如何。",
        "from": "X72n1428_006:0149a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)隨吾三五夏。",
        "from": "X72n1428_006:0149a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日夜辨來賓。",
        "from": "X72n1428_006:0149a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗麟侍者下火",
        "from": "X72n1428_006:0149a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗說相通。",
        "from": "X72n1428_006:0149b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一氣契同。",
        "from": "X72n1428_006:0149b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稀如麟角。",
        "from": "X72n1428_006:0149b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貴似鳳瓏。",
        "from": "X72n1428_006:0149b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直向三呼聲裡而正逢三喚句中龍。",
        "from": "X72n1428_006:0149b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得國師真付囑。",
        "from": "X72n1428_006:0149b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知南陽一期風。",
        "from": "X72n1428_006:0149b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這箇宗麟侍者。",
        "from": "X72n1428_006:0149b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用辜負。",
        "from": "X72n1428_006:0149b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不論笑容。",
        "from": "X72n1428_006:0149b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直去難識。",
        "from": "X72n1428_006:0149b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直來難通。",
        "from": "X72n1428_006:0149b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟如何。",
        "from": "X72n1428_006:0149b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)物外獨騎千里象。",
        "from": "X72n1428_006:0149b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬年松下擊金鐘。",
        "from": "X72n1428_006:0149b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清信監寺下火",
        "from": "X72n1428_006:0149b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨法身終勿垢。",
        "from": "X72n1428_006:0149b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成心作識絕功勳。",
        "from": "X72n1428_006:0149b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從來虗廓通方眼。",
        "from": "X72n1428_006:0149b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜子滿船騎白雲。",
        "from": "X72n1428_006:0149b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正當恁麼廓通尅。",
        "from": "X72n1428_006:0149b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清信監寺平生要。",
        "from": "X72n1428_006:0149b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又臨行一句子畢竟如何體委。",
        "from": "X72n1428_006:0149b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(以火畫圓相擲曰)新送故國一閤文。",
        "from": "X72n1428_006:0149b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理證典座下火",
        "from": "X72n1428_006:0149b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至理無名。",
        "from": "X72n1428_006:0149b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真證有行。",
        "from": "X72n1428_006:0149b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白雲斷路。",
        "from": "X72n1428_006:0149b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青山色清。",
        "from": "X72n1428_006:0149b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九度辨洞山之精。",
        "from": "X72n1428_006:0149b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三回到投子之庭。",
        "from": "X72n1428_006:0149b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪峯手段。",
        "from": "X72n1428_006:0149b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後人範靈。",
        "from": "X72n1428_006:0149b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道理證典座即今履踐又如何。",
        "from": "X72n1428_006:0149b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊谷光分後。",
        "from": "X72n1428_006:0149b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石玉自瑩瑩。",
        "from": "X72n1428_006:0149b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)木人半夜語。",
        "from": "X72n1428_006:0149b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許外人聽。",
        "from": "X72n1428_006:0149b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨安府王常侍玉田居士下火",
        "from": "X72n1428_006:0149b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王輪轉位。",
        "from": "X72n1428_006:0149b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "田地幽深。",
        "from": "X72n1428_006:0149b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寒光照徹。",
        "from": "X72n1428_006:0149b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月落波心。",
        "from": "X72n1428_006:0149b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運得淨名不二門之雷。",
        "from": "X72n1428_006:0149b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卜著毗耶獅子窟之座。",
        "from": "X72n1428_006:0149b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續於孔老百年之蹱。",
        "from": "X72n1428_006:0149b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知於學場三千之金。",
        "from": "X72n1428_006:0149b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道到這裡。",
        "from": "X72n1428_006:0149b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉田居士四十三年。",
        "from": "X72n1428_006:0149b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令制似天日月。",
        "from": "X72n1428_006:0149b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行禁如地雨霖。",
        "from": "X72n1428_006:0149b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟臨行玄機如何道著去。",
        "from": "X72n1428_006:0149b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)故人夢醒後愁意可難禁。",
        "from": "X72n1428_006:0149b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興陽府尚書敏聰林居士下火",
        "from": "X72n1428_006:0149b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聰明大士。",
        "from": "X72n1428_006:0149b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙林法王。",
        "from": "X72n1428_006:0149b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人世游事。",
        "from": "X72n1428_006:0149b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨守興陽。",
        "from": "X72n1428_006:0149b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行令於四海則無處不正。",
        "from": "X72n1428_006:0149b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展力於十方則無語不當。",
        "from": "X72n1428_006:0149b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入三昧知應現契妙清光。",
        "from": "X72n1428_006:0149b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分神通聽語信精理靈方。",
        "from": "X72n1428_006:0149c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到這裡聦林居士平穩一句如何道。",
        "from": "X72n1428_006:0149c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(擲火曰)君臣合道處。",
        "from": "X72n1428_006:0149c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寒月入池塘。",
        "from": "X72n1428_006:0149c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明州太守刑仙相國祐普居士下火",
        "from": "X72n1428_006:0149c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天理無私。",
        "from": "X72n1428_006:0149c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公祐分明。",
        "from": "X72n1428_006:0149c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普照不照。",
        "from": "X72n1428_006:0149c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞然睲睲。",
        "from": "X72n1428_006:0149c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊出入獨朗利名。",
        "from": "X72n1428_006:0149c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無碍坐臥自鑒經行。",
        "from": "X72n1428_006:0149c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明州為守則橫按寶劒之一匣。",
        "from": "X72n1428_006:0149c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穩収東天之亂。",
        "from": "X72n1428_006:0149c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝城宣勑則每持尊言之三閤。",
        "from": "X72n1428_006:0149c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴於北州之制。",
        "from": "X72n1428_006:0149c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直入少林一九室。",
        "from": "X72n1428_006:0149c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正出天童千歲京。",
        "from": "X72n1428_006:0149c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道這箇是祐普居士五十二年作略。",
        "from": "X72n1428_006:0149c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今臨行一句如何提携。",
        "from": "X72n1428_006:0149c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還會麼。",
        "from": "X72n1428_006:0149c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(以火畫圓相曰)圓通無處。",
        "from": "X72n1428_006:0149c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手眼了爾。",
        "from": "X72n1428_006:0149c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全身清清。",
        "from": "X72n1428_006:0149c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(呵呵大笑而曰)天上人間見火星。",
        "from": "X72n1428_006:0149c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹興二十九天己丑晏坐自讚與石霜明總禪師。",
        "from": "X72n1428_006:0149c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其語曰奇哉妙相現神通。",
        "from": "X72n1428_006:0149c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊矣玄容絕異同。",
        "from": "X72n1428_006:0149c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位上青山無處頂。",
        "from": "X72n1428_006:0149c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功清蘆水有松風。",
        "from": "X72n1428_006:0149c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍子生龍湛水月。",
        "from": "X72n1428_006:0149c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳳兒孕鳳白雲中。",
        "from": "X72n1428_006:0149c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分賓分主七旬歲。",
        "from": "X72n1428_006:0149c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明正借偏十智宗。",
        "from": "X72n1428_006:0149c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是天童親密意。",
        "from": "X72n1428_006:0149c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰知劫外擊金鐘。",
        "from": "X72n1428_006:0149c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈竺淨慈自得禪師錄卷第六(終)",
        "from": "X72n1428_006:0149c20_0",
        "context_with_next_sentence": false
    }
]