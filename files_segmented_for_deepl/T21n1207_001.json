[
    {
        "source_sentence": "說矩里迦(唐作尊勅)龍王像法",
        "from": "T21n1207_001:0038a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其形如蛇作雷電之勢。",
        "from": "T21n1207_001:0038a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身金色繫如意寶。",
        "from": "T21n1207_001:0038a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧焰起四足蹴蹹之形。",
        "from": "T21n1207_001:0038a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "背張竪七金剛利針。",
        "from": "T21n1207_001:0038a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "額生一支玉角。",
        "from": "T21n1207_001:0038a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纏繞劍上畫阿字。",
        "from": "T21n1207_001:0038a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼用觀心一一分明。",
        "from": "T21n1207_001:0038a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作人相者。",
        "from": "T21n1207_001:0038a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面目喜怒遍身甲冑。",
        "from": "T21n1207_001:0038a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如毘嚕博叉王。",
        "from": "T21n1207_001:0038a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左托腰把索。",
        "from": "T21n1207_001:0038a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右臂屈肘向上執劍。",
        "from": "T21n1207_001:0038a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂上置龍王蟠。",
        "from": "T21n1207_001:0038a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立金剛山。",
        "from": "T21n1207_001:0038a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別本云。",
        "from": "T21n1207_001:0038a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦里龍王如天神熙怡之相。",
        "from": "T21n1207_001:0038a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上畫出七頭龍。",
        "from": "T21n1207_001:0038a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡跪仰視如來。",
        "from": "T21n1207_001:0038a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合捧寶蓮華。",
        "from": "T21n1207_001:0038a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字變成此龍使者。",
        "from": "T21n1207_001:0038a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此字是重。",
        "from": "T21n1207_001:0038a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提種子。",
        "from": "T21n1207_001:0038a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡持誦者。",
        "from": "T21n1207_001:0038a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有此心。",
        "from": "T21n1207_001:0038a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希求無上菩提故。",
        "from": "T21n1207_001:0038a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劍上觀此字。",
        "from": "T21n1207_001:0038a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此生一切法也。",
        "from": "T21n1207_001:0038a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即菩提心也。",
        "from": "T21n1207_001:0038a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行點者成就福智故。",
        "from": "T21n1207_001:0038a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大空者是成菩提也。",
        "from": "T21n1207_001:0038a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃點者是除遣義。",
        "from": "T21n1207_001:0038a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸垢入涅槃也。",
        "from": "T21n1207_001:0038a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重字猶如大龍王有大威德。",
        "from": "T21n1207_001:0038a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興雲致雨一切自在故。",
        "from": "T21n1207_001:0038a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字亦復如是。",
        "from": "T21n1207_001:0038b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來作事皆從此字出生。",
        "from": "T21n1207_001:0038b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次龍王法身印真言　左右無名小指。",
        "from": "T21n1207_001:0038b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌內相叉。",
        "from": "T21n1207_001:0038b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指直竪相拄。",
        "from": "T21n1207_001:0038b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二食指拄中指背上節。",
        "from": "T21n1207_001:0038b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指少曲。",
        "from": "T21n1207_001:0038b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各拄二食指內中節頭來去。",
        "from": "T21n1207_001:0038b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在肘樣如後真言曰。",
        "from": "T21n1207_001:0038b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三漫多勃馱喃唵(一)布祇(二)步醯布伽跛底吽莎訶(上音四)一切龍王法身印　以右羽頭在左內。",
        "from": "T21n1207_001:0038b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右後四指少曲。",
        "from": "T21n1207_001:0038b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母指博頭指少曲之。",
        "from": "T21n1207_001:0038b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手返曲向右手上。",
        "from": "T21n1207_001:0038b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如是。",
        "from": "T21n1207_001:0038b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩手相向狀如蛇口。",
        "from": "T21n1207_001:0038b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手四指開令來去。",
        "from": "T21n1207_001:0038b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言(如前)。",
        "from": "T21n1207_001:0038b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次華座印　二手八指似曲不曲。",
        "from": "T21n1207_001:0038b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆向上竪。",
        "from": "T21n1207_001:0038b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指相去二寸。",
        "from": "T21n1207_001:0038b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二無二中各相去二寸。",
        "from": "T21n1207_001:0038b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指去四寸。",
        "from": "T21n1207_001:0038b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並竪大指。",
        "from": "T21n1207_001:0038b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二指相著。",
        "from": "T21n1207_001:0038b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次牙印　屈右肘向上。",
        "from": "T21n1207_001:0038b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈無名小指在掌。",
        "from": "T21n1207_001:0038b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中指直竪。",
        "from": "T21n1207_001:0038b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈頭指側著中指節。",
        "from": "T21n1207_001:0038b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指捻頭指側。",
        "from": "T21n1207_001:0038b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作壇供養時節。",
        "from": "T21n1207_001:0038b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此印誦真言。",
        "from": "T21n1207_001:0038b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用前喚入壇中。",
        "from": "T21n1207_001:0038b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得一切皆悉歡喜。",
        "from": "T21n1207_001:0038b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲祈雨當具作壇。",
        "from": "T21n1207_001:0038b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養即得降雨三五七八九一寸等(云云)法具在別文。",
        "from": "T21n1207_001:0038b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次根本真言曰。",
        "from": "T21n1207_001:0038b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多勃馱喃俱迦耶迦囉若銘伽扇儞曳娑嚩(二合)訶用前印　若有病患者。",
        "from": "T21n1207_001:0038b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當結龍王身印加持。",
        "from": "T21n1207_001:0038b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即執劍上上運心。",
        "from": "T21n1207_001:0038b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想婀字變成金色龍。",
        "from": "T21n1207_001:0038b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒光曜之貌。",
        "from": "T21n1207_001:0038b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令觀病人即得除差。",
        "from": "T21n1207_001:0038b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有蘖[口*栗]訶魅魂之著誐[口*栗]行疫病鬼之持。",
        "from": "T21n1207_001:0038b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位在南方。",
        "from": "T21n1207_001:0038b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及瘧病種種苦惱事。",
        "from": "T21n1207_001:0038b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作一肘水壇。",
        "from": "T21n1207_001:0038b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四角置瓶口插生華用綵華。",
        "from": "T21n1207_001:0038b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得四方置四器盛滿香水。",
        "from": "T21n1207_001:0038c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸供具物布列莊嚴。",
        "from": "T21n1207_001:0038c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即勸請龍王安住壇上。",
        "from": "T21n1207_001:0038c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中方置劍啟白事由。",
        "from": "T21n1207_001:0038c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮拜供養誦真言。",
        "from": "T21n1207_001:0038c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持百八遍。",
        "from": "T21n1207_001:0038c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執刀加被病人。",
        "from": "T21n1207_001:0038c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得消滅即發遣誦破壇明。",
        "from": "T21n1207_001:0038c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次觀風輪破壇。",
        "from": "T21n1207_001:0038c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了不獲令久住。",
        "from": "T21n1207_001:0038c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法祕中祕也。",
        "from": "T21n1207_001:0038c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫專輒傳。",
        "from": "T21n1207_001:0038c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱哩迦龍者。",
        "from": "T21n1207_001:0038c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸龍之中王。",
        "from": "T21n1207_001:0038c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具出文殊師利法等。",
        "from": "T21n1207_001:0038c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矩里迦龍王像法",
        "from": "T21n1207_001:0038c09_0",
        "context_with_next_sentence": false
    }
]