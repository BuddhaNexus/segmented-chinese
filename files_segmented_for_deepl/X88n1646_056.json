[
    {
        "source_sentence": "居士傳五十六",
        "from": "X88n1646_056:0290b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子傳",
        "from": "X88n1646_056:0290b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子者。",
        "from": "X88n1646_056:0290c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不傳其姓名。",
        "from": "X88n1646_056:0290c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平生落落自喜。",
        "from": "X88n1646_056:0290c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人莫識也。",
        "from": "X88n1646_056:0290c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗與空空子遊。",
        "from": "X88n1646_056:0290c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空空子異之。",
        "from": "X88n1646_056:0290c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子世為儒。",
        "from": "X88n1646_056:0290c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其父兄皆以文學官於朝。",
        "from": "X88n1646_056:0290c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子年未冠。",
        "from": "X88n1646_056:0290c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用儒言取科第。",
        "from": "X88n1646_056:0290c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既益治古經注疏及世間文字。",
        "from": "X88n1646_056:0290c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮晝夜不自休。",
        "from": "X88n1646_056:0290c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗慕古抗直士如洛陽賈生之為人也。",
        "from": "X88n1646_056:0290c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思欲考鏡得失之故。",
        "from": "X88n1646_056:0290c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳治安之書。",
        "from": "X88n1646_056:0290c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赫然著功名於當世。",
        "from": "X88n1646_056:0290c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之自省曰。",
        "from": "X88n1646_056:0290c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非吾務也。",
        "from": "X88n1646_056:0290c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是端點靜思。",
        "from": "X88n1646_056:0290c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反己修德。",
        "from": "X88n1646_056:0290c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非禮弗履。",
        "from": "X88n1646_056:0290c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之復自省曰。",
        "from": "X88n1646_056:0290c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾未明吾心奈何。",
        "from": "X88n1646_056:0290c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以問空空子。",
        "from": "X88n1646_056:0290c08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而空空子默然無言也。",
        "from": "X88n1646_056:0290c08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或告以道家修鍊術。",
        "from": "X88n1646_056:0290c09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習之三年不效。",
        "from": "X88n1646_056:0290c09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後讀佛書心開。",
        "from": "X88n1646_056:0290c09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為道之所歸在是矣。",
        "from": "X88n1646_056:0290c10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞西方有無量壽佛。",
        "from": "X88n1646_056:0290c10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明接引五濁眾生往生淨土。",
        "from": "X88n1646_056:0290c11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意忳然慕之。",
        "from": "X88n1646_056:0290c11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日面西而拜焉。",
        "from": "X88n1646_056:0290c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空空子曰。",
        "from": "X88n1646_056:0290c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是可不謂知歸者乎。",
        "from": "X88n1646_056:0290c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年三十。",
        "from": "X88n1646_056:0290c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有司下檄召作七品官。",
        "from": "X88n1646_056:0290c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子辭焉。",
        "from": "X88n1646_056:0290c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈曰。",
        "from": "X88n1646_056:0290c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綠草庭前。",
        "from": "X88n1646_056:0290c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好風林下。",
        "from": "X88n1646_056:0290c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂我太平。",
        "from": "X88n1646_056:0290c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無冬無夏。",
        "from": "X88n1646_056:0290c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃之遂斷肉食。",
        "from": "X88n1646_056:0290c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕婬慾。",
        "from": "X88n1646_056:0290c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈曰。",
        "from": "X88n1646_056:0290c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我身爾身。",
        "from": "X88n1646_056:0290c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾肉我肉。",
        "from": "X88n1646_056:0290c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大德曰生。",
        "from": "X88n1646_056:0290c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與爾並育。",
        "from": "X88n1646_056:0290c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作偈曰。",
        "from": "X88n1646_056:0290c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從妄有愛。",
        "from": "X88n1646_056:0290c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬死萬生。",
        "from": "X88n1646_056:0290c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛然斫斷。",
        "from": "X88n1646_056:0290c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天地清寧。",
        "from": "X88n1646_056:0290c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未幾隱去。",
        "from": "X88n1646_056:0290c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺一偈曰。",
        "from": "X88n1646_056:0290c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來無所從。",
        "from": "X88n1646_056:0290c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去無所至。",
        "from": "X88n1646_056:0290c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極樂非遙。",
        "from": "X88n1646_056:0290c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當念即是。",
        "from": "X88n1646_056:0290c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空空子曰。",
        "from": "X88n1646_056:0290c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或言知歸子往來城市間。",
        "from": "X88n1646_056:0290c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時與人遇。",
        "from": "X88n1646_056:0290c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然予嘗求之。",
        "from": "X88n1646_056:0290c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弗見也。",
        "from": "X88n1646_056:0290c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅臺山贊曰。",
        "from": "X88n1646_056:0290c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予與知歸子游舊矣。",
        "from": "X88n1646_056:0290c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾不知其始。",
        "from": "X88n1646_056:0290c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渺然相失。",
        "from": "X88n1646_056:0290c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逖而萬里。",
        "from": "X88n1646_056:0290c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾隆三十年。",
        "from": "X88n1646_056:0290c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲陽耑蒙。",
        "from": "X88n1646_056:0290c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲名作噩。",
        "from": "X88n1646_056:0290c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃相遇於京師。",
        "from": "X88n1646_056:0290c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且月炎天氷光滿屋。",
        "from": "X88n1646_056:0290c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脈脈心歡喜談丹鼎考故童。",
        "from": "X88n1646_056:0290c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝暮追戀。",
        "from": "X88n1646_056:0290c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾我都忘。",
        "from": "X88n1646_056:0290c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邀我閉關延壽寺街長洲舘。",
        "from": "X88n1646_056:0290c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓覺經一部。",
        "from": "X88n1646_056:0290c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊子一卷。",
        "from": "X88n1646_056:0290c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或趺坐之幽幽。",
        "from": "X88n1646_056:0290c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說空之侃侃。",
        "from": "X88n1646_056:0291a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出關行省其兄汶上縣。",
        "from": "X88n1646_056:0291a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於汶上縣寄我書。",
        "from": "X88n1646_056:0291a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書辭短短無他語要。",
        "from": "X88n1646_056:0291a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我素貧賤。",
        "from": "X88n1646_056:0291a02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "砥礪其廉。",
        "from": "X88n1646_056:0291a02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隅我時得書贊歎。",
        "from": "X88n1646_056:0291a03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂奇特。",
        "from": "X88n1646_056:0291a03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如聽朝陽鳳咮。",
        "from": "X88n1646_056:0291a03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雝雝嗚高梧。",
        "from": "X88n1646_056:0291a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時我心刻刻有一知歸子。",
        "from": "X88n1646_056:0291a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時我欲徹究儒釋黃老之原與其氐。",
        "from": "X88n1646_056:0291a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凉凉求耦。",
        "from": "X88n1646_056:0291a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲奮而未奮。",
        "from": "X88n1646_056:0291a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自得知歸子。",
        "from": "X88n1646_056:0291a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我膽廓廓斗覺新寬粗。",
        "from": "X88n1646_056:0291a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子文章根性如梅如青蓮。",
        "from": "X88n1646_056:0291a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寒香寂靜和祥扇為人慈竺貌臞然。",
        "from": "X88n1646_056:0291a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏避利勢。",
        "from": "X88n1646_056:0291a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑懦頑。",
        "from": "X88n1646_056:0291a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞一善言。",
        "from": "X88n1646_056:0291a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一善行。",
        "from": "X88n1646_056:0291a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意而有勇。",
        "from": "X88n1646_056:0291a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "健若霜中鳶。",
        "from": "X88n1646_056:0291a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慊慊乎其如有求也。",
        "from": "X88n1646_056:0291a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪夫之徇財好。",
        "from": "X88n1646_056:0291a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色者[獻鬲+魚]色。",
        "from": "X88n1646_056:0291a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴夫之思飲。",
        "from": "X88n1646_056:0291a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周飢者索食。",
        "from": "X88n1646_056:0291a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日皇皇而不息。",
        "from": "X88n1646_056:0291a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜鰥鰥以水眸。",
        "from": "X88n1646_056:0291a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後聞無量壽佛名字。",
        "from": "X88n1646_056:0291a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂積念焉不休。",
        "from": "X88n1646_056:0291a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其志灝然。",
        "from": "X88n1646_056:0291a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若迦樓羅王之闢海水而吞龍也。",
        "from": "X88n1646_056:0291a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身飄然。",
        "from": "X88n1646_056:0291a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不繫之舟。",
        "from": "X88n1646_056:0291a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮海無邊而嵯峨乎中流。",
        "from": "X88n1646_056:0291a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憺乎其幾於不憂也。",
        "from": "X88n1646_056:0291a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閔乎嘵嘵。",
        "from": "X88n1646_056:0291a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唇敝舌焦。",
        "from": "X88n1646_056:0291a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其嘯侶而命儔也。",
        "from": "X88n1646_056:0291a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾之不見知歸子三歲矣。",
        "from": "X88n1646_056:0291a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日十二時。",
        "from": "X88n1646_056:0291a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二時百刻。",
        "from": "X88n1646_056:0291a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "睇睞送遙睛。",
        "from": "X88n1646_056:0291a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喉閒長格磔。",
        "from": "X88n1646_056:0291a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今以往。",
        "from": "X88n1646_056:0291a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倘得相於茅屋三間。",
        "from": "X88n1646_056:0291a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "危峯鏡湖。",
        "from": "X88n1646_056:0291a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好華一瓶。",
        "from": "X88n1646_056:0291a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名香一鑪。",
        "from": "X88n1646_056:0291a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一箇蒲團。",
        "from": "X88n1646_056:0291a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一箇缽盂。",
        "from": "X88n1646_056:0291a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛號數萬聲。",
        "from": "X88n1646_056:0291a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴一兩卷。",
        "from": "X88n1646_056:0291a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不亦樂乎。",
        "from": "X88n1646_056:0291a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不亦樂乎。",
        "from": "X88n1646_056:0291a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[魚*孚]水瀰瀰。",
        "from": "X88n1646_056:0291a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日往月來。",
        "from": "X88n1646_056:0291a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不思。",
        "from": "X88n1646_056:0291a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾隆四十一年歲易涒灘歲名柔兆陬月吉日造 居士傳跋儒佛之道。",
        "from": "X88n1646_056:0291a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泥其跡若東西之相反。",
        "from": "X88n1646_056:0291b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然循其本則一而已矣。",
        "from": "X88n1646_056:0291b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子之學。",
        "from": "X88n1646_056:0291b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入儒佛間。",
        "from": "X88n1646_056:0291b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初未嘗強而同之。",
        "from": "X88n1646_056:0291b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而卒不見其有異。",
        "from": "X88n1646_056:0291b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂知本者非耶。",
        "from": "X88n1646_056:0291b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既以自利又欲利人。",
        "from": "X88n1646_056:0291b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下數千百年。",
        "from": "X88n1646_056:0291b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡偉人碩士。",
        "from": "X88n1646_056:0291b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有契斯道者。",
        "from": "X88n1646_056:0291b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "采其言行。",
        "from": "X88n1646_056:0291b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比以史法。",
        "from": "X88n1646_056:0291b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一書。",
        "from": "X88n1646_056:0291b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰居士傳。",
        "from": "X88n1646_056:0291b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事提其要。",
        "from": "X88n1646_056:0291b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句鉤其元。",
        "from": "X88n1646_056:0291b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真法門班馬也。",
        "from": "X88n1646_056:0291b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僕少失學。",
        "from": "X88n1646_056:0291b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耽著五欲。",
        "from": "X88n1646_056:0291b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順流忘返。",
        "from": "X88n1646_056:0291b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年三十宦遊京師。",
        "from": "X88n1646_056:0291b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶於市上得覩雲棲法彚。",
        "from": "X88n1646_056:0291b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惕然心動。",
        "from": "X88n1646_056:0291b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧歸卒業。",
        "from": "X88n1646_056:0291b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始知信向。",
        "from": "X88n1646_056:0291b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸田以往。",
        "from": "X88n1646_056:0291b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "客居吳門。",
        "from": "X88n1646_056:0291b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於勤息菴曉峯老人處熟知歸子名。",
        "from": "X88n1646_056:0291b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後接晤於文星閣中。",
        "from": "X88n1646_056:0291b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服其持律之堅。",
        "from": "X88n1646_056:0291b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向道之切。",
        "from": "X88n1646_056:0291b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺惘然自失。",
        "from": "X88n1646_056:0291b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子顧以予之能不背於道也。",
        "from": "X88n1646_056:0291b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是往還無間。",
        "from": "X88n1646_056:0291b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃之出此書示予。",
        "from": "X88n1646_056:0291b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予讀之竟。",
        "from": "X88n1646_056:0291b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作而歎曰。",
        "from": "X88n1646_056:0291b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自為儒佛之學者。",
        "from": "X88n1646_056:0291b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷不知本。",
        "from": "X88n1646_056:0291b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黨同伐異。",
        "from": "X88n1646_056:0291b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泣岐無歸。",
        "from": "X88n1646_056:0291b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子起而救之。",
        "from": "X88n1646_056:0291b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是書之作。",
        "from": "X88n1646_056:0291b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖欲學者除去異同之見。",
        "from": "X88n1646_056:0291b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反循其本。",
        "from": "X88n1646_056:0291b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而致力焉。",
        "from": "X88n1646_056:0291b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於一旦豁然。",
        "from": "X88n1646_056:0291b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還問其所為儒佛者。",
        "from": "X88n1646_056:0291b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水中月。",
        "from": "X88n1646_056:0291b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如空中華。",
        "from": "X88n1646_056:0291b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復何異同之有。",
        "from": "X88n1646_056:0291b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予既樂玩其書。",
        "from": "X88n1646_056:0291b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰授之梓人。",
        "from": "X88n1646_056:0291b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以廣其傳。",
        "from": "X88n1646_056:0291b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼誌其緣起如此。",
        "from": "X88n1646_056:0291b21_0",
        "context_with_next_sentence": false
    }
]