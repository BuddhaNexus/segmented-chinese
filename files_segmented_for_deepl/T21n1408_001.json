        "from": "T21n1408_001:0923b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告比丘傳教言。",
        "from": "T21n1408_001:0923c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今以此陀羅尼於南閻浮提十方之內。",
        "from": "T21n1408_001:0923c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國邑聚落處處傳說。",
        "from": "T21n1408_001:0923c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使諸眾生咸得聞知。",
        "from": "T21n1408_001:0923c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令此陀羅尼廣宣流布。",
        "from": "T21n1408_001:0923c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1408_001:0923c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為與眾生能增長功德故。",
        "from": "T21n1408_001:0923c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與眾生除諸苦惱故。",
        "from": "T21n1408_001:0923c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於世間除諸災難故。",
        "from": "T21n1408_001:0923c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令諸惡鬼神息滅惡心故。",
        "from": "T21n1408_001:0923c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令所在國邑聚落王及臣民。",
        "from": "T21n1408_001:0923c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆得安隱快樂故。",
        "from": "T21n1408_001:0923c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若有善男子善女人。",
        "from": "T21n1408_001:0924a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以此陀羅尼恭敬供養受持讀誦。",
        "from": "T21n1408_001:0924a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除災難增長功德者。",
        "from": "T21n1408_001:0924a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當發至誠心歸依三寶。",
        "from": "T21n1408_001:0924a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一七日中日別備諸香花飲食供養於佛。",
        "from": "T21n1408_001:0924a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又日供七僧。",
        "from": "T21n1408_001:0924a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又至中夜於自家庭。",
        "from": "T21n1408_001:0924a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燃大炬火用為照燎持誦此陀羅尼。",
        "from": "T21n1408_001:0924a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有災難當得解脫。",
        "from": "T21n1408_001:0924a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若善男子善女人能如是作者。",
        "from": "T21n1408_001:0924a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得自身解脫。",
        "from": "T21n1408_001:0924a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若二七日如是備種種香花飲食。",
        "from": "T21n1408_001:0924a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養佛僧一倍於前。",
        "from": "T21n1408_001:0924a08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所有父母同得解脫。",
        "from": "T21n1408_001:0924a09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若於三七日能如是於佛法僧倍前。",
        "from": "T21n1408_001:0924a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種香花飲食恭敬供養者。",
        "from": "T21n1408_001:0924a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人所有男女并一切眷屬同得解脫。",
        "from": "T21n1408_001:0924a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若四七日如是修持。",
        "from": "T21n1408_001:0924a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍倍於前精虔不懈者。",
        "from": "T21n1408_001:0924a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人所住聚落一切人民咸得解脫。",
        "from": "T21n1408_001:0924a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘以要言之。",
        "from": "T21n1408_001:0924a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至七七日倍倍增勝於前供養奉佛法僧。",
        "from": "T21n1408_001:0924a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人所獲功德。",
        "from": "T21n1408_001:0924a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上及國王下及人民。",
        "from": "T21n1408_001:0924a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國界之內普得解脫。",
        "from": "T21n1408_001:0924a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘當知我今告汝。",
        "from": "T21n1408_001:0924a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝持此法於此界他方。",
        "from": "T21n1408_001:0924a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速疾傳說使令流布。",
        "from": "T21n1408_001:0924a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1408_001:0924a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為能與眾生消除種種苦惱。",
        "from": "T21n1408_001:0924a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長種種功德故。",
        "from": "T21n1408_001:0924a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若復有人得聞是法知其利益心不恭敬。",
        "from": "T21n1408_001:0924a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復不能廣為人說。",
        "from": "T21n1408_001:0924a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不能自專讀誦。",
        "from": "T21n1408_001:0924a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘當知是人得匿法過同五逆罪。",
        "from": "T21n1408_001:0924a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘若有眾生得聞是法。",
        "from": "T21n1408_001:0924a22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不違我教躬自依法。",
        "from": "T21n1408_001:0924a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦供養恭敬。",
        "from": "T21n1408_001:0924a23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為他人依法修福。",
        "from": "T21n1408_001:0924a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又能流布廣利眾生。",
        "from": "T21n1408_001:0924a24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘我即遙知先為此人往妙高山。",
        "from": "T21n1408_001:0924a25_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至天人阿修羅乾闥婆迦樓羅所。",
        "from": "T21n1408_001:0924a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以利益心降伏勸喻。",
        "from": "T21n1408_001:0924a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為其說法咸令歡喜。",
        "from": "T21n1408_001:0924a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使彼天人阿修羅等。",
        "from": "T21n1408_001:0924a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息彼諍心互相恭敬。",
        "from": "T21n1408_001:0924a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得閻浮提界災難息滅疫沴不生。",
        "from": "T21n1408_001:0924a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡鬼等各各潛隱。",
        "from": "T21n1408_001:0924a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生咸得安樂。",
        "from": "T21n1408_001:0924a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼神人說是事已隱形不現。",
        "from": "T21n1408_001:0924b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教比丘遵奉傳說。",
        "from": "T21n1408_001:0924b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸大眾言。",
        "from": "T21n1408_001:0924b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼妙吉祥童子於過去世。",
        "from": "T21n1408_001:0924b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以方便力為諸眾生說如是法。",
        "from": "T21n1408_001:0924b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為汝等今復宣說汝。",
        "from": "T21n1408_001:0924b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等專心受持讀誦。",
        "from": "T21n1408_001:0924b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世廣令流布。",
        "from": "T21n1408_001:0924b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消除災難增益吉祥。",
        "from": "T21n1408_001:0924b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿難陀及諸大眾。",
        "from": "T21n1408_001:0924b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛說已咸悉歡喜。",
        "from": "T21n1408_001:0924b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心受持禮佛而退。",
        "from": "T21n1408_001:0924b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說最上意陀羅尼經",
        "from": "T21n1408_001:0924b09_0",
        "context_with_next_sentence": false
    }
]