[
    {
        "source_sentence": "觀心誦經法記",
        "from": "X55n0912_001:0687b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台大師　說",
        "from": "X55n0912_001:0687b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪尊者　述",
        "from": "X55n0912_001:0687b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師以無礙辯力。",
        "from": "X55n0912_001:0687b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣慈力。",
        "from": "X55n0912_001:0687b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨機益物使不空過。",
        "from": "X55n0912_001:0687b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故於誦習。",
        "from": "X55n0912_001:0687b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別施方便綱格。",
        "from": "X55n0912_001:0687b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖即不逾大旨。",
        "from": "X55n0912_001:0687b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於別行網目還殊。",
        "from": "X55n0912_001:0687b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故更寄之以具諸行。",
        "from": "X55n0912_001:0687b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余忝承宗匠。",
        "from": "X55n0912_001:0687b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗攬異同。",
        "from": "X55n0912_001:0687b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以理冠之事無不可。",
        "from": "X55n0912_001:0687b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但根緣不等。",
        "from": "X55n0912_001:0687b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習者希。",
        "from": "X55n0912_001:0687b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故略指方隅以擬行事。",
        "from": "X55n0912_001:0687b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然一家行旨必藉十乘。",
        "from": "X55n0912_001:0687b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中義求於理以足。",
        "from": "X55n0912_001:0687b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "的辨相狀或未分明。",
        "from": "X55n0912_001:0687b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今先於當文節目指示諦境。",
        "from": "X55n0912_001:0687b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義立十乘。",
        "from": "X55n0912_001:0687b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次攬廣文以點宗要。",
        "from": "X55n0912_001:0687b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先分節文者。",
        "from": "X55n0912_001:0687b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文中自三。",
        "from": "X55n0912_001:0687b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初示身口儀則。",
        "from": "X55n0912_001:0687b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即序分也。",
        "from": "X55n0912_001:0687b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義兼自他。",
        "from": "X55n0912_001:0687b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第二下。",
        "from": "X55n0912_001:0687b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正示觀。",
        "from": "X55n0912_001:0687b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當自行。",
        "from": "X55n0912_001:0687b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三第三下。",
        "from": "X55n0912_001:0687b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即流通也。",
        "from": "X55n0912_001:0687b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當化他。",
        "from": "X55n0912_001:0687b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於正觀中分之為二。",
        "from": "X55n0912_001:0687b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先法次義。",
        "from": "X55n0912_001:0687b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法謂觀法。",
        "from": "X55n0912_001:0687b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義具眾行。",
        "from": "X55n0912_001:0687b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初文境也。",
        "from": "X55n0912_001:0687b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二次須下即觀智也。",
        "from": "X55n0912_001:0687b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中亦二。",
        "from": "X55n0912_001:0687b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先釋次結。",
        "from": "X55n0912_001:0687b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋中為三。",
        "from": "X55n0912_001:0687b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初文假觀。",
        "from": "X55n0912_001:0687b21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二次觀下空觀。",
        "from": "X55n0912_001:0687b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三雖無下中觀。",
        "from": "X55n0912_001:0687b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次能作下總結。",
        "from": "X55n0912_001:0687b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次雖無下明具諸行。",
        "from": "X55n0912_001:0687b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中又二。",
        "from": "X55n0912_001:0687b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初正明具法。",
        "from": "X55n0912_001:0687b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次從三世下稱歎抑揚。",
        "from": "X55n0912_001:0687b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初具法中四。",
        "from": "X55n0912_001:0687b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初具六度。",
        "from": "X55n0912_001:0687b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次自行下判權實。",
        "from": "X55n0912_001:0687b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三若能下具三因。",
        "from": "X55n0912_001:0687c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四若觀下具三德。",
        "from": "X55n0912_001:0687c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三德中有修有性。",
        "from": "X55n0912_001:0687c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫欲誦經滅罪。",
        "from": "X55n0912_001:0687c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一先須盥漱整肅威儀。",
        "from": "X55n0912_001:0687c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別座跏趺而坐。",
        "from": "X55n0912_001:0687c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二入觀。",
        "from": "X55n0912_001:0687c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀所坐之座高廣嚴好。",
        "from": "X55n0912_001:0687c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次觀座下皆有天龍八部四眾圍遶聽法。",
        "from": "X55n0912_001:0687c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次須運心作觀。",
        "from": "X55n0912_001:0687c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀我能為法師。",
        "from": "X55n0912_001:0687c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳佛正教。",
        "from": "X55n0912_001:0687c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為四眾說。",
        "from": "X55n0912_001:0687c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想所出聲。",
        "from": "X55n0912_001:0687c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非但此一席眾。",
        "from": "X55n0912_001:0687c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至十方皆得聽受。",
        "from": "X55n0912_001:0687c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為假觀。",
        "from": "X55n0912_001:0687c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次觀能說之人所誦之經。",
        "from": "X55n0912_001:0687c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者是經。",
        "from": "X55n0912_001:0687c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為經卷是。",
        "from": "X55n0912_001:0687c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為紙墨是。",
        "from": "X55n0912_001:0687c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為標軸是。",
        "from": "X55n0912_001:0687c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦音為口出。",
        "from": "X55n0912_001:0687c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為齦齶和合而出。",
        "from": "X55n0912_001:0687c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為有我身。",
        "from": "X55n0912_001:0687c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為無我身。",
        "from": "X55n0912_001:0687c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰是誦者。",
        "from": "X55n0912_001:0687c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為心是誦。",
        "from": "X55n0912_001:0687c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為口是誦。",
        "from": "X55n0912_001:0687c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為和合出。",
        "from": "X55n0912_001:0687c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀此四眾。",
        "from": "X55n0912_001:0687c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是實有。",
        "from": "X55n0912_001:0687c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為從想生。",
        "from": "X55n0912_001:0687c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾非有。",
        "from": "X55n0912_001:0687c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無我能誦。",
        "from": "X55n0912_001:0687c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名空觀。",
        "from": "X55n0912_001:0687c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無所誦之經而有經卷紙墨文字。",
        "from": "X55n0912_001:0687c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無能誦之人而有我身為四眾宣說。",
        "from": "X55n0912_001:0687c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖非內外不離內外。",
        "from": "X55n0912_001:0687c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖非經卷不離經卷。",
        "from": "X55n0912_001:0687c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖非身口不離身口。",
        "from": "X55n0912_001:0687c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從始至終必無差謬。",
        "from": "X55n0912_001:0687c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名不可思議。",
        "from": "X55n0912_001:0687c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能作此解能作此觀。",
        "from": "X55n0912_001:0687c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為三觀於一心中得。",
        "from": "X55n0912_001:0687c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不前不後三觀宛然。",
        "from": "X55n0912_001:0687c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無施者而有法施。",
        "from": "X55n0912_001:0687c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無受者四眾炳然。",
        "from": "X55n0912_001:0687c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無法座登座宣說。",
        "from": "X55n0912_001:0687c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非一二三而一二三。",
        "from": "X55n0912_001:0687c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為法施檀波羅蜜。",
        "from": "X55n0912_001:0687c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心誦持無諸遮礙。",
        "from": "X55n0912_001:0687c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為持戒。",
        "from": "X55n0912_001:0687c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍耐惡覺。",
        "from": "X55n0912_001:0687c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名聞財利皆不能惱。",
        "from": "X55n0912_001:0687c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之為忍。",
        "from": "X55n0912_001:0687c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心不息。",
        "from": "X55n0912_001:0687c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從始至終無有懈怠。",
        "from": "X55n0912_001:0687c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為精進。",
        "from": "X55n0912_001:0687c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專念此經無有愛味。",
        "from": "X55n0912_001:0687c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之為禪。",
        "from": "X55n0912_001:0687c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別無謬。",
        "from": "X55n0912_001:0687c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序正流通無不諦了。",
        "from": "X55n0912_001:0688a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句文分明。",
        "from": "X55n0912_001:0688a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為般若。",
        "from": "X55n0912_001:0688a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名六波羅蜜具足。",
        "from": "X55n0912_001:0688a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自行此經名之為實。",
        "from": "X55n0912_001:0688a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳授外人名之為權。",
        "from": "X55n0912_001:0688a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能一生。",
        "from": "X55n0912_001:0688a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此成辨功德。",
        "from": "X55n0912_001:0688a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無始心名為正因。",
        "from": "X55n0912_001:0688a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍有觀心名為了因。",
        "from": "X55n0912_001:0688a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高座為四眾說授名為緣因。",
        "from": "X55n0912_001:0688a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三因具足。",
        "from": "X55n0912_001:0688a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若觀未明但是性德。",
        "from": "X55n0912_001:0688a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "研之不已觀心相應名託聖胎。",
        "from": "X55n0912_001:0688a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以胎業成就名為修德。",
        "from": "X55n0912_001:0688a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中間四十一位亦修亦性。",
        "from": "X55n0912_001:0688a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於極果名為種智。",
        "from": "X55n0912_001:0688a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊字三點不縱不橫。",
        "from": "X55n0912_001:0688a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名大涅槃。",
        "from": "X55n0912_001:0688a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名到彼岸。",
        "from": "X55n0912_001:0688a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名第一義空。",
        "from": "X55n0912_001:0688a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等大慧是名誦經。",
        "from": "X55n0912_001:0688a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正觀三世諸佛。",
        "from": "X55n0912_001:0688a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不從此而生。",
        "from": "X55n0912_001:0688a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信者可施。",
        "from": "X55n0912_001:0688a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無信莫施。",
        "from": "X55n0912_001:0688a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三流通者。",
        "from": "X55n0912_001:0688a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自調度不名為慈。",
        "from": "X55n0912_001:0688a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見苦不救不名為悲。",
        "from": "X55n0912_001:0688a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既修正觀現前。",
        "from": "X55n0912_001:0688a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應莊巖法界。",
        "from": "X55n0912_001:0688a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所誦經竟出觀之後。",
        "from": "X55n0912_001:0688a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此運觀功德。",
        "from": "X55n0912_001:0688a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已登正覺者願廣度眾生。",
        "from": "X55n0912_001:0688a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入位之人悉登上地。",
        "from": "X55n0912_001:0688a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未入位者即運慈悲二法。",
        "from": "X55n0912_001:0688a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願未來世共成正覺。",
        "from": "X55n0912_001:0688a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次義立十法者。",
        "from": "X55n0912_001:0688a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如向觀境即玅境也。",
        "from": "X55n0912_001:0688a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修觀義當心。",
        "from": "X55n0912_001:0688a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次修空觀。",
        "from": "X55n0912_001:0688a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當止觀。",
        "from": "X55n0912_001:0688a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次修中觀。",
        "from": "X55n0912_001:0688a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當破徧。",
        "from": "X55n0912_001:0688a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次總結束。",
        "from": "X55n0912_001:0688a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當通塞。",
        "from": "X55n0912_001:0688a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次具六度。",
        "from": "X55n0912_001:0688a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當道品。",
        "from": "X55n0912_001:0688a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權實三因。",
        "from": "X55n0912_001:0688a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當正助。",
        "from": "X55n0912_001:0688a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次辨修性。",
        "from": "X55n0912_001:0688a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當次位。",
        "from": "X55n0912_001:0688a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一義空。",
        "from": "X55n0912_001:0688a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義當安忍及以無著。",
        "from": "X55n0912_001:0688a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依之修行。",
        "from": "X55n0912_001:0688a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於理略足。",
        "from": "X55n0912_001:0688a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心中法而未甚分明。",
        "from": "X55n0912_001:0688a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故更授廣文以助行者。",
        "from": "X55n0912_001:0688a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使十乘觀法不出于誦持。",
        "from": "X55n0912_001:0688a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所觀十境徧通乎聲色。",
        "from": "X55n0912_001:0688a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故復重明以先先轍。",
        "from": "X55n0912_001:0688a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者。",
        "from": "X55n0912_001:0688a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了向觀境。",
        "from": "X55n0912_001:0688a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心性界如。",
        "from": "X55n0912_001:0688a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具三諦。",
        "from": "X55n0912_001:0688a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即玅也。",
        "from": "X55n0912_001:0688a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者。",
        "from": "X55n0912_001:0688a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依斯玅境。",
        "from": "X55n0912_001:0688a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發誓而誦。",
        "from": "X55n0912_001:0688b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求三德果。",
        "from": "X55n0912_001:0688b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利十界生。",
        "from": "X55n0912_001:0688b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者。",
        "from": "X55n0912_001:0688b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一文句。",
        "from": "X55n0912_001:0688b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念無遺。",
        "from": "X55n0912_001:0688b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心性皎然。",
        "from": "X55n0912_001:0688b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂照雙運。",
        "from": "X55n0912_001:0688b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者。",
        "from": "X55n0912_001:0688b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂照而誦。",
        "from": "X55n0912_001:0688b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓融徧破。",
        "from": "X55n0912_001:0688b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總攝橫豎無生教門。",
        "from": "X55n0912_001:0688b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者。",
        "from": "X55n0912_001:0688b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀誦心性。",
        "from": "X55n0912_001:0688b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念雖著。",
        "from": "X55n0912_001:0688b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚無無著豈有於著。",
        "from": "X55n0912_001:0688b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者。",
        "from": "X55n0912_001:0688b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曉誦心色。",
        "from": "X55n0912_001:0688b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念處宛然。",
        "from": "X55n0912_001:0688b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂均調試。",
        "from": "X55n0912_001:0688b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸品具足。",
        "from": "X55n0912_001:0688b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者。",
        "from": "X55n0912_001:0688b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於誦習。",
        "from": "X55n0912_001:0688b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弊念起。",
        "from": "X55n0912_001:0688b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事理合然而兼治。",
        "from": "X55n0912_001:0688b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者。",
        "from": "X55n0912_001:0688b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知誦心雖具。",
        "from": "X55n0912_001:0688b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂照自達已。",
        "from": "X55n0912_001:0688b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位六即途。",
        "from": "X55n0912_001:0688b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者。",
        "from": "X55n0912_001:0688b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於誦習時違順境起。",
        "from": "X55n0912_001:0688b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專以寂照安之。",
        "from": "X55n0912_001:0688b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十。",
        "from": "X55n0912_001:0688b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依觀誦功。",
        "from": "X55n0912_001:0688b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得相似。",
        "from": "X55n0912_001:0688b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根愛此似位。",
        "from": "X55n0912_001:0688b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為頂墮。",
        "from": "X55n0912_001:0688b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修離愛進入銅輪○於業魔王禪見慢二乘諸動者。",
        "from": "X55n0912_001:0688b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當移觀勤而觀之。",
        "from": "X55n0912_001:0688b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨境觀成。",
        "from": "X55n0912_001:0688b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依前習觀。",
        "from": "X55n0912_001:0688b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不虧所誦而兼治之。",
        "from": "X55n0912_001:0688b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌為勝術。",
        "from": "X55n0912_001:0688b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最為高尚。",
        "from": "X55n0912_001:0688b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦經既爾。",
        "from": "X55n0912_001:0688b11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸行亦復。",
        "from": "X55n0912_001:0688b12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然但得名隨行十乘。",
        "from": "X55n0912_001:0688b12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "委悉終須具依大部。",
        "from": "X55n0912_001:0688b12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X55n0912_001:0688b13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大部令觀陰．界．入境。",
        "from": "X55n0912_001:0688b13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與此誦經同異何別。",
        "from": "X55n0912_001:0688b13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "X55n0912_001:0688b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義同事異。",
        "from": "X55n0912_001:0688b14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言事異者。",
        "from": "X55n0912_001:0688b14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持之即善陰故。",
        "from": "X55n0912_001:0688b14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故誦身口即色陰也。",
        "from": "X55n0912_001:0688b14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領納文句即受陰也。",
        "from": "X55n0912_001:0688b15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想緣義味即想陰也。",
        "from": "X55n0912_001:0688b15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是誦持即行陰也。",
        "from": "X55n0912_001:0688b16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了別分明即識陰也。",
        "from": "X55n0912_001:0688b16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰與界．入合不同。",
        "from": "X55n0912_001:0688b17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能於茲體達色心。",
        "from": "X55n0912_001:0688b17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使具十觀十境無遺息。",
        "from": "X55n0912_001:0688b17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何減大部之行。",
        "from": "X55n0912_001:0688b18_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有融今古會釋教理以為異耳。",
        "from": "X55n0912_001:0688b18_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀心誦經法記(終)",
        "from": "X55n0912_001:0688b21_0",
        "context_with_next_sentence": false
    }
]