[
    {
        "source_sentence": "金剛經口訣",
        "from": "X24n0460_001:0534b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六祖大鑒禪師說",
        "from": "X24n0460_001:0534b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法性圓寂。",
        "from": "X24n0460_001:0534b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無生滅。",
        "from": "X24n0460_001:0534b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因有生念。",
        "from": "X24n0460_001:0534b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有生緣。",
        "from": "X24n0460_001:0534b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故天得命之以生。",
        "from": "X24n0460_001:0534b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故謂之命。",
        "from": "X24n0460_001:0534b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天命既立。",
        "from": "X24n0460_001:0534b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真空不有。",
        "from": "X24n0460_001:0534b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前日生念。",
        "from": "X24n0460_001:0534b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉而為意識。",
        "from": "X24n0460_001:0534b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意識之用散。",
        "from": "X24n0460_001:0534b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為六根。",
        "from": "X24n0460_001:0534b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根各有分別。",
        "from": "X24n0460_001:0534b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有所總持者。",
        "from": "X24n0460_001:0534b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故謂之心。",
        "from": "X24n0460_001:0534b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心者念慮之所在也。",
        "from": "X24n0460_001:0534b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神識之所舍也。",
        "from": "X24n0460_001:0534b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真妄之所共處者也。",
        "from": "X24n0460_001:0534c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當凡夫聖賢機會之地也。",
        "from": "X24n0460_001:0534c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生。",
        "from": "X24n0460_001:0534c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無始來。",
        "from": "X24n0460_001:0534c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能離生滅者。",
        "from": "X24n0460_001:0534c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為此心所累故。",
        "from": "X24n0460_001:0534c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛惟教人了此心。",
        "from": "X24n0460_001:0534c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心了即見自性。",
        "from": "X24n0460_001:0534c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見自性則是菩提也。",
        "from": "X24n0460_001:0534c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此在性時。",
        "from": "X24n0460_001:0534c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆自空寂而湛然。",
        "from": "X24n0460_001:0534c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無緣有生念而後有者也。",
        "from": "X24n0460_001:0534c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有生則有形。",
        "from": "X24n0460_001:0534c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形者地水火風之聚沫也。",
        "from": "X24n0460_001:0534c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以血氣為體。",
        "from": "X24n0460_001:0534c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有生者之所託也。",
        "from": "X24n0460_001:0534c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "血氣足則精足。",
        "from": "X24n0460_001:0534c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精足則生神。",
        "from": "X24n0460_001:0534c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神足生妙用。",
        "from": "X24n0460_001:0534c07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則妙用者。",
        "from": "X24n0460_001:0534c07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即在吾圓寂時之真我也。",
        "from": "X24n0460_001:0534c07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因形之遇物故。",
        "from": "X24n0460_001:0534c08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見之於作為而已。",
        "from": "X24n0460_001:0534c08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但凡夫迷而逐物。",
        "from": "X24n0460_001:0534c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖賢明而應物。",
        "from": "X24n0460_001:0534c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐物者自彼。",
        "from": "X24n0460_001:0534c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應物者自我。",
        "from": "X24n0460_001:0534c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自彼者。",
        "from": "X24n0460_001:0534c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著於所見。",
        "from": "X24n0460_001:0534c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故受輪迴。",
        "from": "X24n0460_001:0534c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自我者。",
        "from": "X24n0460_001:0534c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當體常空。",
        "from": "X24n0460_001:0534c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬劫如一。",
        "from": "X24n0460_001:0534c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合而觀之。",
        "from": "X24n0460_001:0534c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆心之妙用也。",
        "from": "X24n0460_001:0534c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當其未生之時。",
        "from": "X24n0460_001:0534c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂性者。",
        "from": "X24n0460_001:0534c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿具足。",
        "from": "X24n0460_001:0534c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空然無物。",
        "from": "X24n0460_001:0534c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "湛乎自然。",
        "from": "X24n0460_001:0534c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其廣大。",
        "from": "X24n0460_001:0534c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與虗空等。",
        "from": "X24n0460_001:0534c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來變化。",
        "from": "X24n0460_001:0534c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切自由。",
        "from": "X24n0460_001:0534c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天雖欲命我以生。",
        "from": "X24n0460_001:0534c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其可得乎。",
        "from": "X24n0460_001:0534c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天猶不能命我以生。",
        "from": "X24n0460_001:0534c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於四大乎。",
        "from": "X24n0460_001:0534c14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於五行乎。",
        "from": "X24n0460_001:0534c14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有生念。",
        "from": "X24n0460_001:0534c15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有生緣。",
        "from": "X24n0460_001:0534c15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故天得以生命我。",
        "from": "X24n0460_001:0534c15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大得以氣形我。",
        "from": "X24n0460_001:0534c15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五行得以數約我。",
        "from": "X24n0460_001:0534c16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此有生者之所以有滅也。",
        "from": "X24n0460_001:0534c16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然乎生滅則一。",
        "from": "X24n0460_001:0534c17_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在凡夫聖賢之所以生滅則殊。",
        "from": "X24n0460_001:0534c17_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫之人。",
        "from": "X24n0460_001:0534c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生緣念有。",
        "from": "X24n0460_001:0534c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識隨業變。",
        "from": "X24n0460_001:0534c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習氣薰染。",
        "from": "X24n0460_001:0534c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因生愈甚。",
        "from": "X24n0460_001:0534c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故既生之後。",
        "from": "X24n0460_001:0534c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心著諸妄。",
        "from": "X24n0460_001:0534c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄認四大。",
        "from": "X24n0460_001:0534c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為我身。",
        "from": "X24n0460_001:0534c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄認六親。",
        "from": "X24n0460_001:0534c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為我有。",
        "from": "X24n0460_001:0534c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄認聲色。",
        "from": "X24n0460_001:0534c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為快樂。",
        "from": "X24n0460_001:0534c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄認塵勞。",
        "from": "X24n0460_001:0534c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為富貴。",
        "from": "X24n0460_001:0534c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心目知見。",
        "from": "X24n0460_001:0534c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所不妄。",
        "from": "X24n0460_001:0534c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸妄既起。",
        "from": "X24n0460_001:0534c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱萬差。",
        "from": "X24n0460_001:0534c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄念奪真。",
        "from": "X24n0460_001:0534c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真性遂隱。",
        "from": "X24n0460_001:0534c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人我為主。",
        "from": "X24n0460_001:0534c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真識為客。",
        "from": "X24n0460_001:0534c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業前引。",
        "from": "X24n0460_001:0534c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百業後隨。",
        "from": "X24n0460_001:0534c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流浪生死。",
        "from": "X24n0460_001:0534c23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有涯際。",
        "from": "X24n0460_001:0534c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生盡則滅。",
        "from": "X24n0460_001:0534c23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅盡復生。",
        "from": "X24n0460_001:0534c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅相尋。",
        "from": "X24n0460_001:0534c23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至墮諸趣。",
        "from": "X24n0460_001:0534c24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉轉不知。",
        "from": "X24n0460_001:0534c24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愈恣無明。",
        "from": "X24n0460_001:0534c24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造諸業罟。",
        "from": "X24n0460_001:0534c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂至塵沙劫盡。",
        "from": "X24n0460_001:0534c24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復人身。",
        "from": "X24n0460_001:0535a01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖賢則不然。",
        "from": "X24n0460_001:0535a01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖賢生不因念。",
        "from": "X24n0460_001:0535a01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應迹而生。",
        "from": "X24n0460_001:0535a01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生則生。",
        "from": "X24n0460_001:0535a02_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不待彼命。",
        "from": "X24n0460_001:0535a02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故既生之後。",
        "from": "X24n0460_001:0535a02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓寂之性。",
        "from": "X24n0460_001:0535a02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依舊湛然無體。",
        "from": "X24n0460_001:0535a02_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相無罣礙。",
        "from": "X24n0460_001:0535a03_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其照萬法。",
        "from": "X24n0460_001:0535a03_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如青天白日。",
        "from": "X24n0460_001:0535a03_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無毫髮隱滯故。",
        "from": "X24n0460_001:0535a03_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能建立一切善法。",
        "from": "X24n0460_001:0535a04_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍於沙界。",
        "from": "X24n0460_001:0535a04_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見其少。",
        "from": "X24n0460_001:0535a04_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受一切眾生。",
        "from": "X24n0460_001:0535a04_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸於寂滅。",
        "from": "X24n0460_001:0535a05_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以為多驅之不能來逐之不能去。",
        "from": "X24n0460_001:0535a05_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖托四大為形。",
        "from": "X24n0460_001:0535a06_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五行為養。",
        "from": "X24n0460_001:0535a06_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆我所假。",
        "from": "X24n0460_001:0535a06_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗妄認我。",
        "from": "X24n0460_001:0535a06_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣苟盡我迹當滅。",
        "from": "X24n0460_001:0535a07_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "委而去之。",
        "from": "X24n0460_001:0535a07_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來去耳。",
        "from": "X24n0460_001:0535a07_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我何與哉。",
        "from": "X24n0460_001:0535a07_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故凡夫。",
        "from": "X24n0460_001:0535a08_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有生則有滅。",
        "from": "X24n0460_001:0535a08_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅者不能不生。",
        "from": "X24n0460_001:0535a08_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢聖有生亦有滅。",
        "from": "X24n0460_001:0535a08_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅者歸於真空。",
        "from": "X24n0460_001:0535a09_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故凡夫生滅。",
        "from": "X24n0460_001:0535a09_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如身中影。",
        "from": "X24n0460_001:0535a09_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入相隨。",
        "from": "X24n0460_001:0535a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有盡時。",
        "from": "X24n0460_001:0535a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖賢生滅。",
        "from": "X24n0460_001:0535a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如空中雷自發自止。",
        "from": "X24n0460_001:0535a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不累於物。",
        "from": "X24n0460_001:0535a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人不知生滅之如此。",
        "from": "X24n0460_001:0535a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以生滅。",
        "from": "X24n0460_001:0535a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為煩惱大患。",
        "from": "X24n0460_001:0535a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖不自覺也。",
        "from": "X24n0460_001:0535a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺則見生滅。",
        "from": "X24n0460_001:0535a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如身上塵。",
        "from": "X24n0460_001:0535a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當一振奮耳。",
        "from": "X24n0460_001:0535a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能累我性哉。",
        "from": "X24n0460_001:0535a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔我如來。",
        "from": "X24n0460_001:0535a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大慈悲心。",
        "from": "X24n0460_001:0535a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憫一切眾生。",
        "from": "X24n0460_001:0535a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷錯顛倒。",
        "from": "X24n0460_001:0535a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流浪生死之如此。",
        "from": "X24n0460_001:0535a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又見一切眾生。",
        "from": "X24n0460_001:0535a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本有快樂自在性。",
        "from": "X24n0460_001:0535a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆可修證成佛。",
        "from": "X24n0460_001:0535a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲一切眾生。",
        "from": "X24n0460_001:0535a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡為聖賢生滅。",
        "from": "X24n0460_001:0535a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為凡夫生滅。",
        "from": "X24n0460_001:0535a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶慮一切眾生。",
        "from": "X24n0460_001:0535a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始以來。",
        "from": "X24n0460_001:0535a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流浪日久。",
        "from": "X24n0460_001:0535a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其種性已差。",
        "from": "X24n0460_001:0535a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未能以一法速悟故。",
        "from": "X24n0460_001:0535a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說八萬四千法門。",
        "from": "X24n0460_001:0535a17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門門可入。",
        "from": "X24n0460_001:0535a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆可到真如之地。",
        "from": "X24n0460_001:0535a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每說一法門。",
        "from": "X24n0460_001:0535a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫非丁寧實語。",
        "from": "X24n0460_001:0535a18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲使一切眾生。",
        "from": "X24n0460_001:0535a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各隨所見法門。",
        "from": "X24n0460_001:0535a19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入自心地。",
        "from": "X24n0460_001:0535a19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到自心地。",
        "from": "X24n0460_001:0535a20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見自佛性。",
        "from": "X24n0460_001:0535a20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證自身佛。",
        "from": "X24n0460_001:0535a20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即同如來。",
        "from": "X24n0460_001:0535a20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故如來。",
        "from": "X24n0460_001:0535a20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸經說有者。",
        "from": "X24n0460_001:0535a21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲使一切眾生。",
        "from": "X24n0460_001:0535a21_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩相生善。",
        "from": "X24n0460_001:0535a21_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說無者。",
        "from": "X24n0460_001:0535a21_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲使一切眾生。",
        "from": "X24n0460_001:0535a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離相見性。",
        "from": "X24n0460_001:0535a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說色空。",
        "from": "X24n0460_001:0535a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如是。",
        "from": "X24n0460_001:0535a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而眾生執著。",
        "from": "X24n0460_001:0535a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見有非真有。",
        "from": "X24n0460_001:0535a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見無非真無。",
        "from": "X24n0460_001:0535a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其見色見空。",
        "from": "X24n0460_001:0535a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如是執著。",
        "from": "X24n0460_001:0535a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復起斷常二見。",
        "from": "X24n0460_001:0535a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉為生死根蒂。",
        "from": "X24n0460_001:0535a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不示以無二法門。",
        "from": "X24n0460_001:0535a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又將迷錯顛倒。",
        "from": "X24n0460_001:0535b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流浪生死。",
        "from": "X24n0460_001:0535b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚於前日。",
        "from": "X24n0460_001:0535b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故如來又為說大般若法。",
        "from": "X24n0460_001:0535b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破斷常二見。",
        "from": "X24n0460_001:0535b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使一切眾生。",
        "from": "X24n0460_001:0535b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知真有真無真色真空。",
        "from": "X24n0460_001:0535b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來無二。",
        "from": "X24n0460_001:0535b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不遠人。",
        "from": "X24n0460_001:0535b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "湛然寂靜。",
        "from": "X24n0460_001:0535b03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只在自己性中。",
        "from": "X24n0460_001:0535b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以自己性智慧。",
        "from": "X24n0460_001:0535b04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照破諸妄。",
        "from": "X24n0460_001:0535b04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則曉然自見。",
        "from": "X24n0460_001:0535b04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故大般若經六百卷。",
        "from": "X24n0460_001:0535b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如來為菩薩果人。",
        "from": "X24n0460_001:0535b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說佛性。",
        "from": "X24n0460_001:0535b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而其間。",
        "from": "X24n0460_001:0535b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶有為頓漸者說。",
        "from": "X24n0460_001:0535b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟金剛經。",
        "from": "X24n0460_001:0535b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為發大乘者說。",
        "from": "X24n0460_001:0535b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為發最上乘者說。",
        "from": "X24n0460_001:0535b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故其經。",
        "from": "X24n0460_001:0535b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先說四生四相。",
        "from": "X24n0460_001:0535b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次云凡所有相。",
        "from": "X24n0460_001:0535b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是虗妄。",
        "from": "X24n0460_001:0535b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見諸相非相。",
        "from": "X24n0460_001:0535b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見如來。",
        "from": "X24n0460_001:0535b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖顯一切法。",
        "from": "X24n0460_001:0535b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至無所住。",
        "from": "X24n0460_001:0535b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為真諦。",
        "from": "X24n0460_001:0535b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故如來於此經。",
        "from": "X24n0460_001:0535b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡說涉有即破之。",
        "from": "X24n0460_001:0535b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以非直取實相。",
        "from": "X24n0460_001:0535b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示眾生。",
        "from": "X24n0460_001:0535b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖恐眾生不解佛所說。",
        "from": "X24n0460_001:0535b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心反有所住故也。",
        "from": "X24n0460_001:0535b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如所謂佛法即非佛法之類是也。",
        "from": "X24n0460_001:0535b11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛經口訣(終)",
        "from": "X24n0460_001:0535b14_0",
        "context_with_next_sentence": false
    }
]