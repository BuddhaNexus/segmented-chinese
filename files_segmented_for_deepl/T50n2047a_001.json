[
    {
        "source_sentence": "龍樹菩薩傳",
        "from": "T50n2047a_001:0184a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姚秦三藏鳩摩羅什譯",
        "from": "T50n2047a_001:0184a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹菩薩者。",
        "from": "T50n2047a_001:0184a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出南天竺梵志種也。",
        "from": "T50n2047a_001:0184a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聰奇悟事不再告。",
        "from": "T50n2047a_001:0184a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在乳餔之中。",
        "from": "T50n2047a_001:0184a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞諸梵志誦四圍陀典各四萬偈。",
        "from": "T50n2047a_001:0184a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈有三十二字。",
        "from": "T50n2047a_001:0184a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆諷其文而領其義。",
        "from": "T50n2047a_001:0184a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弱冠馳名獨步諸國。",
        "from": "T50n2047a_001:0184a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天文地理圖緯祕讖。",
        "from": "T50n2047a_001:0184a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸道術無不悉綜。",
        "from": "T50n2047a_001:0184a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契友三人亦是一時之傑。",
        "from": "T50n2047a_001:0184a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相與議曰。",
        "from": "T50n2047a_001:0184a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下理義可以開神明悟幽旨者。",
        "from": "T50n2047a_001:0184a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾等盡之矣。",
        "from": "T50n2047a_001:0184a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復欲何以自娛。",
        "from": "T50n2047a_001:0184a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "騁情極欲最是一生之樂。",
        "from": "T50n2047a_001:0184a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然諸梵志道士勢。",
        "from": "T50n2047a_001:0184a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非王公何由得之。",
        "from": "T50n2047a_001:0184a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有隱身之術斯樂可辦。",
        "from": "T50n2047a_001:0184a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四人相視莫逆於心。",
        "from": "T50n2047a_001:0184a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱至術家求隱身法。",
        "from": "T50n2047a_001:0184a28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "術師念曰。",
        "from": "T50n2047a_001:0184a28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此四梵志擅名一世草芥群生。",
        "from": "T50n2047a_001:0184a28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以術故屈辱就我。",
        "from": "T50n2047a_001:0184a29_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸梵志才明絕世。",
        "from": "T50n2047a_001:0184b01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所不知者唯此賤法。",
        "from": "T50n2047a_001:0184b01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若授之。",
        "from": "T50n2047a_001:0184b02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得必棄我不可復屈。",
        "from": "T50n2047a_001:0184b02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且與其藥使用。",
        "from": "T50n2047a_001:0184b02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不知藥盡必來永當師我。",
        "from": "T50n2047a_001:0184b03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各與青藥一丸告之曰。",
        "from": "T50n2047a_001:0184b03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝在靜處以水磨之。",
        "from": "T50n2047a_001:0184b04_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用塗眼瞼汝形當隱。",
        "from": "T50n2047a_001:0184b04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無人見者。",
        "from": "T50n2047a_001:0184b05_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹磨此藥時聞其氣即皆識之。",
        "from": "T50n2047a_001:0184b05_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分數多少錙銖無失。",
        "from": "T50n2047a_001:0184b06_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還告藥師向所得藥有七十種分數。",
        "from": "T50n2047a_001:0184b06_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多少皆如其方。",
        "from": "T50n2047a_001:0184b07_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥師問曰汝何由知之。",
        "from": "T50n2047a_001:0184b07_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "T50n2047a_001:0184b08_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥自有氣何以不知。",
        "from": "T50n2047a_001:0184b08_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師即歎伏。",
        "from": "T50n2047a_001:0184b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若斯人者聞之猶難。",
        "from": "T50n2047a_001:0184b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而況相遇。",
        "from": "T50n2047a_001:0184b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之賤術何足惜耶。",
        "from": "T50n2047a_001:0184b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即具授之。",
        "from": "T50n2047a_001:0184b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四人得術縱意自在。",
        "from": "T50n2047a_001:0184b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常入王宮。",
        "from": "T50n2047a_001:0184b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宮中美人皆被侵淩。",
        "from": "T50n2047a_001:0184b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百餘日後宮中人有懷姙者。",
        "from": "T50n2047a_001:0184b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懅以白王庶免罪咎。",
        "from": "T50n2047a_001:0184b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王大不悅。",
        "from": "T50n2047a_001:0184b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此何不祥為怪乃爾。",
        "from": "T50n2047a_001:0184b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召諸智臣以謀此事。",
        "from": "T50n2047a_001:0184b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有舊老者言。",
        "from": "T50n2047a_001:0184b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡如此事應有二種。",
        "from": "T50n2047a_001:0184b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或是鬼魅或是方術。",
        "from": "T50n2047a_001:0184b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以細土置諸門中。",
        "from": "T50n2047a_001:0184b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令有司守之斷諸行者。",
        "from": "T50n2047a_001:0184b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是術人其跡自現。",
        "from": "T50n2047a_001:0184b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以兵除。",
        "from": "T50n2047a_001:0184b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是鬼魅入而無跡。",
        "from": "T50n2047a_001:0184b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以術滅。",
        "from": "T50n2047a_001:0184b17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即勅門者備法試之。",
        "from": "T50n2047a_001:0184b17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見四人跡驟以聞王。",
        "from": "T50n2047a_001:0184b18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王將力士數百人入宮。",
        "from": "T50n2047a_001:0184b18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉閉諸門。",
        "from": "T50n2047a_001:0184b19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸力士揮刀空斬三人即死。",
        "from": "T50n2047a_001:0184b19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有龍樹斂身屏氣依王頭側。",
        "from": "T50n2047a_001:0184b20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王頭側七尺刀所不至。",
        "from": "T50n2047a_001:0184b20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時始悟欲為苦本眾禍之根。",
        "from": "T50n2047a_001:0184b21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敗德危身皆由此起。",
        "from": "T50n2047a_001:0184b22_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即自誓曰。",
        "from": "T50n2047a_001:0184b22_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若得脫當詣沙門受出家法。",
        "from": "T50n2047a_001:0184b22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既出入山詣一佛塔出家受戒。",
        "from": "T50n2047a_001:0184b23_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十日中誦三藏盡。",
        "from": "T50n2047a_001:0184b24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更求異經都無得處。",
        "from": "T50n2047a_001:0184b24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂入雪山山中有塔。",
        "from": "T50n2047a_001:0184b25_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔中有一老比丘。",
        "from": "T50n2047a_001:0184b25_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以摩訶衍經典與之。",
        "from": "T50n2047a_001:0184b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦受愛樂雖知實義未得通利。",
        "from": "T50n2047a_001:0184b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遊諸國更求餘經。",
        "from": "T50n2047a_001:0184b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提中遍求不得。",
        "from": "T50n2047a_001:0184b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道論師沙門義宗咸皆摧伏。",
        "from": "T50n2047a_001:0184b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道弟子白之言。",
        "from": "T50n2047a_001:0184b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師為一切智人。",
        "from": "T50n2047a_001:0184b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為佛弟子。",
        "from": "T50n2047a_001:0184b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子之道諮承不足將未足耶。",
        "from": "T50n2047a_001:0184b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未足一事非一切智也。",
        "from": "T50n2047a_001:0184c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭窮情屈即起邪慢心。",
        "from": "T50n2047a_001:0184c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自念言。",
        "from": "T50n2047a_001:0184c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界法中津塗甚多。",
        "from": "T50n2047a_001:0184c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛經雖妙以理推之故有未盡。",
        "from": "T50n2047a_001:0184c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未盡之中可推而演之。",
        "from": "T50n2047a_001:0184c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以悟後學於理不違。",
        "from": "T50n2047a_001:0184c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於事無失斯有何咎。",
        "from": "T50n2047a_001:0184c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思此事已即欲行之。",
        "from": "T50n2047a_001:0184c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立師教戒更造衣服。",
        "from": "T50n2047a_001:0184c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令附佛法而有小異。",
        "from": "T50n2047a_001:0184c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以除眾人情示不受學擇日選時當與。",
        "from": "T50n2047a_001:0184c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂弟子受新戒著新衣。",
        "from": "T50n2047a_001:0184c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨在靜處水精房中。",
        "from": "T50n2047a_001:0184c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大龍菩薩見其如是惜而愍之。",
        "from": "T50n2047a_001:0184c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即接之入海。",
        "from": "T50n2047a_001:0184c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於宮殿中開七寶藏。",
        "from": "T50n2047a_001:0184c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發七寶華函。",
        "from": "T50n2047a_001:0184c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸方等深奧經典無量妙法授之。",
        "from": "T50n2047a_001:0184c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹受讀九十日中通解甚多。",
        "from": "T50n2047a_001:0184c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心深入體得寶利。",
        "from": "T50n2047a_001:0184c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍知其心而問之曰。",
        "from": "T50n2047a_001:0184c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "看經遍未。",
        "from": "T50n2047a_001:0184c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言。",
        "from": "T50n2047a_001:0184c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諸函中經多無量不可盡也。",
        "from": "T50n2047a_001:0184c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我可讀者已十倍閻浮提。",
        "from": "T50n2047a_001:0184c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍言。",
        "from": "T50n2047a_001:0184c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我宮中所有經典。",
        "from": "T50n2047a_001:0184c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸處此比復不可數。",
        "from": "T50n2047a_001:0184c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹既得諸經一相深入無生二忍具足。",
        "from": "T50n2047a_001:0184c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍還送出於南天竺。",
        "from": "T50n2047a_001:0184c16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大弘佛法摧伏外道。",
        "from": "T50n2047a_001:0184c17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣明摩訶衍作優波提舍十萬偈。",
        "from": "T50n2047a_001:0184c17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作莊嚴佛道論五千偈。",
        "from": "T50n2047a_001:0184c18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慈方便論五千偈。",
        "from": "T50n2047a_001:0184c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中論五百偈。",
        "from": "T50n2047a_001:0184c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令摩訶衍教大行於天竺。",
        "from": "T50n2047a_001:0184c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又造無畏論十萬偈。",
        "from": "T50n2047a_001:0184c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中論出其中。",
        "from": "T50n2047a_001:0184c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有婆羅門。",
        "from": "T50n2047a_001:0184c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知呪術欲以所能與龍樹諍勝。",
        "from": "T50n2047a_001:0184c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告天竺國王。",
        "from": "T50n2047a_001:0184c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我能伏此比丘。",
        "from": "T50n2047a_001:0184c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王當驗之。",
        "from": "T50n2047a_001:0184c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言。",
        "from": "T50n2047a_001:0184c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝大愚癡。",
        "from": "T50n2047a_001:0184c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此菩薩者。",
        "from": "T50n2047a_001:0184c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明與日月爭光智與聖心並照。",
        "from": "T50n2047a_001:0184c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何不遜敢不宗敬。",
        "from": "T50n2047a_001:0184c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門言。",
        "from": "T50n2047a_001:0184c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王為智人何不以理驗之。",
        "from": "T50n2047a_001:0184c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而見抑挫。",
        "from": "T50n2047a_001:0184c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王見其言至為請龍樹。",
        "from": "T50n2047a_001:0184c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清旦共坐政聽殿上。",
        "from": "T50n2047a_001:0184c26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門後至。",
        "from": "T50n2047a_001:0184c26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於殿前呪作大池廣長清淨。",
        "from": "T50n2047a_001:0184c27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有千葉蓮華。",
        "from": "T50n2047a_001:0184c27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自坐其上而誇龍樹。",
        "from": "T50n2047a_001:0184c28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝在地坐與畜生無異。",
        "from": "T50n2047a_001:0184c28_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而欲與我清淨華上大德智人抗言論議。",
        "from": "T50n2047a_001:0184c29_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時龍樹亦用呪術化作六牙白象。",
        "from": "T50n2047a_001:0185a01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行池水上趣其華座。",
        "from": "T50n2047a_001:0185a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鼻絞拔高舉擲地。",
        "from": "T50n2047a_001:0185a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門傷腰。",
        "from": "T50n2047a_001:0185a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "委頓歸命龍樹。",
        "from": "T50n2047a_001:0185a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不自量毀辱大師。",
        "from": "T50n2047a_001:0185a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願哀受我啟其愚蒙。",
        "from": "T50n2047a_001:0185a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又南天竺王總御諸國信用邪道。",
        "from": "T50n2047a_001:0185a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門釋子一不得見。",
        "from": "T50n2047a_001:0185a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國人遠近皆化其道。",
        "from": "T50n2047a_001:0185a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹念曰。",
        "from": "T50n2047a_001:0185a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹不伐本則條不傾。",
        "from": "T50n2047a_001:0185a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人主不化則道不行。",
        "from": "T50n2047a_001:0185a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國政法王家出錢雇人宿衛。",
        "from": "T50n2047a_001:0185a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹乃應募為其將。",
        "from": "T50n2047a_001:0185a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷戟前驅整行伍勒部曲威不嚴而令行。",
        "from": "T50n2047a_001:0185a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法不彰而物隨。",
        "from": "T50n2047a_001:0185a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王甚嘉之。",
        "from": "T50n2047a_001:0185a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問是何人。",
        "from": "T50n2047a_001:0185a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者答言。",
        "from": "T50n2047a_001:0185a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人應募既不食廩又不取錢。",
        "from": "T50n2047a_001:0185a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而在事恭謹閑習如此。",
        "from": "T50n2047a_001:0185a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知其意何求何欲。",
        "from": "T50n2047a_001:0185a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王召問之。",
        "from": "T50n2047a_001:0185a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝是何人。",
        "from": "T50n2047a_001:0185a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言。",
        "from": "T50n2047a_001:0185a12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我是一切智人。",
        "from": "T50n2047a_001:0185a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王大驚愕而問言。",
        "from": "T50n2047a_001:0185a13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切智人曠代一有。",
        "from": "T50n2047a_001:0185a13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝自言是何以驗之。",
        "from": "T50n2047a_001:0185a14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言。",
        "from": "T50n2047a_001:0185a14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲知智在說王當見問。",
        "from": "T50n2047a_001:0185a14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王即自念。",
        "from": "T50n2047a_001:0185a15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為智主大論議師問之能屈。",
        "from": "T50n2047a_001:0185a15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶不是名一旦不如此非小事。",
        "from": "T50n2047a_001:0185a16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若其不問便是一屈。",
        "from": "T50n2047a_001:0185a16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遲疑良久不得已而問之。",
        "from": "T50n2047a_001:0185a17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天今何為耶。",
        "from": "T50n2047a_001:0185a17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹言。",
        "from": "T50n2047a_001:0185a18_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天今與阿修羅戰。",
        "from": "T50n2047a_001:0185a18_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王聞此言。",
        "from": "T50n2047a_001:0185a18_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如人噎既不得吐。",
        "from": "T50n2047a_001:0185a18_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不得咽。",
        "from": "T50n2047a_001:0185a19_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲非其言復無以證之。",
        "from": "T50n2047a_001:0185a19_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲是其事無事可明。",
        "from": "T50n2047a_001:0185a20_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未言之間。",
        "from": "T50n2047a_001:0185a20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹復言。",
        "from": "T50n2047a_001:0185a20_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非虛論求勝之談。",
        "from": "T50n2047a_001:0185a21_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王小待之。",
        "from": "T50n2047a_001:0185a21_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾有驗言訖。",
        "from": "T50n2047a_001:0185a21_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中便有干戈兵器相係而落。",
        "from": "T50n2047a_001:0185a22_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言。",
        "from": "T50n2047a_001:0185a22_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "干戈矛戟雖是戰器。",
        "from": "T50n2047a_001:0185a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何必知是天與阿修羅戰。",
        "from": "T50n2047a_001:0185a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹言。",
        "from": "T50n2047a_001:0185a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搆之虛言不如校以實事。",
        "from": "T50n2047a_001:0185a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言已阿修羅手足指。",
        "from": "T50n2047a_001:0185a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及其耳鼻從空而下。",
        "from": "T50n2047a_001:0185a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又令王及臣民婆羅門眾見空中清除兩陣相對。",
        "from": "T50n2047a_001:0185a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王乃稽首伏其法化。",
        "from": "T50n2047a_001:0185a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殿上有萬婆羅門。",
        "from": "T50n2047a_001:0185a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆棄束髮受成就戒。",
        "from": "T50n2047a_001:0185a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時有一小乘法師。",
        "from": "T50n2047a_001:0185a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常懷忿疾。",
        "from": "T50n2047a_001:0185a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹將去此世。",
        "from": "T50n2047a_001:0185a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而問之曰。",
        "from": "T50n2047a_001:0185a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝樂我久住此世不。",
        "from": "T50n2047a_001:0185a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言。",
        "from": "T50n2047a_001:0185b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實所不願也。",
        "from": "T50n2047a_001:0185b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退入閑室經日不出。",
        "from": "T50n2047a_001:0185b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子破戶看之。",
        "from": "T50n2047a_001:0185b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂蟬蛻而去。",
        "from": "T50n2047a_001:0185b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去此世已來至今。",
        "from": "T50n2047a_001:0185b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始過百歲。",
        "from": "T50n2047a_001:0185b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺諸國為其立廟敬奉如佛。",
        "from": "T50n2047a_001:0185b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其母樹下生之。",
        "from": "T50n2047a_001:0185b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因字阿周陀那。",
        "from": "T50n2047a_001:0185b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿周陀那樹名也。",
        "from": "T50n2047a_001:0185b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以龍成其道。",
        "from": "T50n2047a_001:0185b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以龍配字。",
        "from": "T50n2047a_001:0185b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號曰龍樹也(依付法藏傳。",
        "from": "T50n2047a_001:0185b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即第十三祖師也。",
        "from": "T50n2047a_001:0185b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假餌仙藥現住長壽二百餘年。",
        "from": "T50n2047a_001:0185b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住持佛法。",
        "from": "T50n2047a_001:0185b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其所度人不可稱數。",
        "from": "T50n2047a_001:0185b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法藏說)。",
        "from": "T50n2047a_001:0185b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹菩薩傳",
        "from": "T50n2047a_001:0185b07_0",
        "context_with_next_sentence": false
    }
]