[
    {
        "source_sentence": "百丈廣錄卷三",
        "from": "X69n1323_001:0007c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X69n1323_001:0007c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是大乘入道頓悟法要。",
        "from": "X69n1323_001:0007c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "X69n1323_001:0007c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你先歇諸緣。",
        "from": "X69n1323_001:0007c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "休息萬事。",
        "from": "X69n1323_001:0007c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善與不善。",
        "from": "X69n1323_001:0007c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世出世間。",
        "from": "X69n1323_001:0007c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法。",
        "from": "X69n1323_001:0007c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竝皆放却。",
        "from": "X69n1323_001:0007c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫記莫憶。",
        "from": "X69n1323_001:0007c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫緣莫念。",
        "from": "X69n1323_001:0007c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放捨身心。",
        "from": "X69n1323_001:0007c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全令自在。",
        "from": "X69n1323_001:0007c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心如木石。",
        "from": "X69n1323_001:0007c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口無所辯。",
        "from": "X69n1323_001:0007c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無所行。",
        "from": "X69n1323_001:0007c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心地若空。",
        "from": "X69n1323_001:0007c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧日自現。",
        "from": "X69n1323_001:0007c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲開日出。",
        "from": "X69n1323_001:0007c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但歇一切攀緣。",
        "from": "X69n1323_001:0007c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪嗔愛取。",
        "from": "X69n1323_001:0007c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢淨情盡。",
        "from": "X69n1323_001:0007c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對五欲八風不動。",
        "from": "X69n1323_001:0007c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被見聞覺知所閡。",
        "from": "X69n1323_001:0007c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被諸法所惑。",
        "from": "X69n1323_001:0007c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然具足一切功德。",
        "from": "X69n1323_001:0007c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足一切神通妙用。",
        "from": "X69n1323_001:0007c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是解脫人。",
        "from": "X69n1323_001:0007c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對一切境法。",
        "from": "X69n1323_001:0007c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無諍亂。",
        "from": "X69n1323_001:0007c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不攝不散。",
        "from": "X69n1323_001:0007c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "透一切聲色。",
        "from": "X69n1323_001:0007c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有滯閡。",
        "from": "X69n1323_001:0007c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為道人。",
        "from": "X69n1323_001:0007c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡是非。",
        "from": "X69n1323_001:0007c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱不運用。",
        "from": "X69n1323_001:0007c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不愛一法。",
        "from": "X69n1323_001:0007c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不捨一法。",
        "from": "X69n1323_001:0007c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為大乘人。",
        "from": "X69n1323_001:0007c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被一切善惡。",
        "from": "X69n1323_001:0007c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空有垢淨。",
        "from": "X69n1323_001:0007c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有為無為。",
        "from": "X69n1323_001:0007c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世出世間。",
        "from": "X69n1323_001:0007c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德智慧之所拘繫。",
        "from": "X69n1323_001:0007c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為佛慧。",
        "from": "X69n1323_001:0007c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是非好醜。",
        "from": "X69n1323_001:0007c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是理非理。",
        "from": "X69n1323_001:0007c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸知解情盡。",
        "from": "X69n1323_001:0007c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能繫縛。",
        "from": "X69n1323_001:0007c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處自在。",
        "from": "X69n1323_001:0007c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為初發心菩薩。",
        "from": "X69n1323_001:0007c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便登佛地。",
        "from": "X69n1323_001:0007c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X69n1323_001:0007c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對一境。",
        "from": "X69n1323_001:0007c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何得心如木石去。",
        "from": "X69n1323_001:0007c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "X69n1323_001:0007c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法。",
        "from": "X69n1323_001:0007c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本不自言。",
        "from": "X69n1323_001:0007c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空不自言。",
        "from": "X69n1323_001:0007c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色亦不言。",
        "from": "X69n1323_001:0007c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是非垢淨。",
        "from": "X69n1323_001:0007c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無心繫縛人。",
        "from": "X69n1323_001:0007c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為人自生虗妄繫著。",
        "from": "X69n1323_001:0007c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作若干種解會。",
        "from": "X69n1323_001:0007c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起若干種知見。",
        "from": "X69n1323_001:0007c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生若干種愛畏。",
        "from": "X69n1323_001:0008a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但了諸法不自生。",
        "from": "X69n1323_001:0008a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從自己一念妄想顛倒取相而有。",
        "from": "X69n1323_001:0008a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知心與境。",
        "from": "X69n1323_001:0008a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本不相到。",
        "from": "X69n1323_001:0008a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當處解脫。",
        "from": "X69n1323_001:0008a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一諸法。",
        "from": "X69n1323_001:0008a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當處寂滅。",
        "from": "X69n1323_001:0008a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當處道場。",
        "from": "X69n1323_001:0008a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又本有之性。",
        "from": "X69n1323_001:0008a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可名目。",
        "from": "X69n1323_001:0008a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來不是凡不是聖。",
        "from": "X69n1323_001:0008a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是垢淨。",
        "from": "X69n1323_001:0008a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非空有。",
        "from": "X69n1323_001:0008a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非善惡。",
        "from": "X69n1323_001:0008a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸染法相應。",
        "from": "X69n1323_001:0008a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名人天二乘界。",
        "from": "X69n1323_001:0008a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若垢淨心盡。",
        "from": "X69n1323_001:0008a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住繫縛。",
        "from": "X69n1323_001:0008a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住解脫。",
        "from": "X69n1323_001:0008a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有一切有為無為縛脫心量。",
        "from": "X69n1323_001:0008a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起於生死。",
        "from": "X69n1323_001:0008a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心自在。",
        "from": "X69n1323_001:0008a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟不與諸妄虗幻塵勞蘊界生死諸入和合。",
        "from": "X69n1323_001:0008a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逈然無寄。",
        "from": "X69n1323_001:0008a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切不拘。",
        "from": "X69n1323_001:0008a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去留無閡。",
        "from": "X69n1323_001:0008a08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來生死。",
        "from": "X69n1323_001:0008a08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如門開相似。",
        "from": "X69n1323_001:0008a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫學道人。",
        "from": "X69n1323_001:0008a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遇種種苦樂稱意不稱意事。",
        "from": "X69n1323_001:0008a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無退屈。",
        "from": "X69n1323_001:0008a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不念一切名聞利養衣食。",
        "from": "X69n1323_001:0008a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不貪一切功德利益。",
        "from": "X69n1323_001:0008a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為世間諸法之所滯礙。",
        "from": "X69n1323_001:0008a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無親無愛。",
        "from": "X69n1323_001:0008a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦樂平懷。",
        "from": "X69n1323_001:0008a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麤衣遮寒。",
        "from": "X69n1323_001:0008a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "糲食活命。",
        "from": "X69n1323_001:0008a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兀兀如愚。",
        "from": "X69n1323_001:0008a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如聾如啞相似。",
        "from": "X69n1323_001:0008a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稍有相應分。",
        "from": "X69n1323_001:0008a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於心中。",
        "from": "X69n1323_001:0008a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣學知解。",
        "from": "X69n1323_001:0008a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求福求智。",
        "from": "X69n1323_001:0008a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是生死。",
        "from": "X69n1323_001:0008a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於理為益。",
        "from": "X69n1323_001:0008a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却被知解境風之所飄溺。",
        "from": "X69n1323_001:0008a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還歸生死海裏。",
        "from": "X69n1323_001:0008a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛是無求。",
        "from": "X69n1323_001:0008a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人求之理乖。",
        "from": "X69n1323_001:0008a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理是無求。",
        "from": "X69n1323_001:0008a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理求之即失。",
        "from": "X69n1323_001:0008a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若著無求。",
        "from": "X69n1323_001:0008a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復同於有求。",
        "from": "X69n1323_001:0008a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若著無為。",
        "from": "X69n1323_001:0008a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復同於有為。",
        "from": "X69n1323_001:0008a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "X69n1323_001:0008a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不取於法。",
        "from": "X69n1323_001:0008a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不取非法。",
        "from": "X69n1323_001:0008a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不取非非法。",
        "from": "X69n1323_001:0008a18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "X69n1323_001:0008a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來所得法。",
        "from": "X69n1323_001:0008a18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法無實亦無虗。",
        "from": "X69n1323_001:0008a18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但能一生心如木石相似。",
        "from": "X69n1323_001:0008a19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被陰界諸入五欲八風之所飄溺。",
        "from": "X69n1323_001:0008a19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生死因斷。",
        "from": "X69n1323_001:0008a20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去住自由。",
        "from": "X69n1323_001:0008a20_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為一切有為因果所縛。",
        "from": "X69n1323_001:0008a20_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被有漏所拘。",
        "from": "X69n1323_001:0008a21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他時還以無自縛為因。",
        "from": "X69n1323_001:0008a21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同事利益。",
        "from": "X69n1323_001:0008a21_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無著心。",
        "from": "X69n1323_001:0008a22_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應一切物。",
        "from": "X69n1323_001:0008a22_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無礙慧。",
        "from": "X69n1323_001:0008a22_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解一切縛。",
        "from": "X69n1323_001:0008a22_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云應病施藥。",
        "from": "X69n1323_001:0008a22_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X69n1323_001:0008a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今出家受戒。",
        "from": "X69n1323_001:0008a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口清淨。",
        "from": "X69n1323_001:0008a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已具諸法。",
        "from": "X69n1323_001:0008a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得解脫否。",
        "from": "X69n1323_001:0008a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "X69n1323_001:0008a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少分解脫。",
        "from": "X69n1323_001:0008b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得心解脫。",
        "from": "X69n1323_001:0008b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦未得一切處解脫。",
        "from": "X69n1323_001:0008b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X69n1323_001:0008b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是心解脫。",
        "from": "X69n1323_001:0008b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切處解脫。",
        "from": "X69n1323_001:0008b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "X69n1323_001:0008b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求佛。",
        "from": "X69n1323_001:0008b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求法。",
        "from": "X69n1323_001:0008b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求僧。",
        "from": "X69n1323_001:0008b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至。",
        "from": "X69n1323_001:0008b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求福智知解等。",
        "from": "X69n1323_001:0008b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢淨情盡。",
        "from": "X69n1323_001:0008b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不守此無求為是。",
        "from": "X69n1323_001:0008b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不住盡處。",
        "from": "X69n1323_001:0008b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不忻天堂畏地獄。",
        "from": "X69n1323_001:0008b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛脫無礙。",
        "from": "X69n1323_001:0008b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即身心及一切處皆名解脫。",
        "from": "X69n1323_001:0008b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝莫言有少分戒。",
        "from": "X69n1323_001:0008b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意淨。",
        "from": "X69n1323_001:0008b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便以為了。",
        "from": "X69n1323_001:0008b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知恒沙戒定慧門。",
        "from": "X69n1323_001:0008b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏解脫。",
        "from": "X69n1323_001:0008b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都未涉一毫毛。",
        "from": "X69n1323_001:0008b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "努力向前。",
        "from": "X69n1323_001:0008b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須猛究取。",
        "from": "X69n1323_001:0008b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫待耳聾眼暗。",
        "from": "X69n1323_001:0008b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面皺頭白。",
        "from": "X69n1323_001:0008b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老苦及身。",
        "from": "X69n1323_001:0008b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲愛纏綿。",
        "from": "X69n1323_001:0008b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼中流淚。",
        "from": "X69n1323_001:0008b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心裏慞惶。",
        "from": "X69n1323_001:0008b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一無所據。",
        "from": "X69n1323_001:0008b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知去處。",
        "from": "X69n1323_001:0008b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到恁時節。",
        "from": "X69n1323_001:0008b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "整理手脚不得也。",
        "from": "X69n1323_001:0008b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱有福智名聞利養。",
        "from": "X69n1323_001:0008b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都不相救。",
        "from": "X69n1323_001:0008b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為心慧未開。",
        "from": "X69n1323_001:0008b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯念諸境。",
        "from": "X69n1323_001:0008b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知返照。",
        "from": "X69n1323_001:0008b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復不見佛道。",
        "from": "X69n1323_001:0008b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一生所有善惡業緣。",
        "from": "X69n1323_001:0008b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉現前。",
        "from": "X69n1323_001:0008b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或忻或怖。",
        "from": "X69n1323_001:0008b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道五陰。",
        "from": "X69n1323_001:0008b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱時現前。",
        "from": "X69n1323_001:0008b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡敷嚴好。",
        "from": "X69n1323_001:0008b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍宅舟船車轝。",
        "from": "X69n1323_001:0008b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明顯赫。",
        "from": "X69n1323_001:0008b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從自心貪愛所現。",
        "from": "X69n1323_001:0008b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡境。",
        "from": "X69n1323_001:0008b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉變成殊勝之境。",
        "from": "X69n1323_001:0008b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但隨貪愛重處。",
        "from": "X69n1323_001:0008b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業識所引。",
        "from": "X69n1323_001:0008b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨著受生。",
        "from": "X69n1323_001:0008b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都無自由分。",
        "from": "X69n1323_001:0008b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍畜良賤。",
        "from": "X69n1323_001:0008b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都總未定。",
        "from": "X69n1323_001:0008b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X69n1323_001:0008b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何得自由分。",
        "from": "X69n1323_001:0008b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "X69n1323_001:0008b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今得即得。",
        "from": "X69n1323_001:0008b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或對五欲八風。",
        "from": "X69n1323_001:0008b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情無取捨。",
        "from": "X69n1323_001:0008b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳嫉貪愛。",
        "from": "X69n1323_001:0008b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所情盡。",
        "from": "X69n1323_001:0008b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢淨俱忘。",
        "from": "X69n1323_001:0008b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日月在空。",
        "from": "X69n1323_001:0008b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不緣而照。",
        "from": "X69n1323_001:0008b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心如土木石。",
        "from": "X69n1323_001:0008b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念如救頭然。",
        "from": "X69n1323_001:0008b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如大香象渡河截流而過。",
        "from": "X69n1323_001:0008b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使無疑誤。",
        "from": "X69n1323_001:0008b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人。",
        "from": "X69n1323_001:0008b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天堂地獄。",
        "from": "X69n1323_001:0008b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱不能攝也。",
        "from": "X69n1323_001:0008b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百丈廣錄卷三",
        "from": "X69n1323_001:0008b22_0",
        "context_with_next_sentence": false
    }
]