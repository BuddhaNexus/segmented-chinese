[
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百十(入第七十二經下半)清涼山沙門　澄觀　述晉水沙門　(淨源)　錄疏注經△四正顯發心本事文類。",
        "from": "X07n0234_110:0916a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發心身德。",
        "from": "X07n0234_110:0916a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時此會中有長者女名寶光明。",
        "from": "X07n0234_110:0916a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有中殊勝行。",
        "from": "X07n0234_110:0916a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空中方便慧。",
        "from": "X07n0234_110:0916a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆寶光義矣。",
        "from": "X07n0234_110:0916a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與六十童女俱端正殊妙(至)常見諸佛求一切智。",
        "from": "X07n0234_110:0916a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正發大心。",
        "from": "X07n0234_110:0916a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時寶光明女去王不遠(至)隨所生處皆隨往生。",
        "from": "X07n0234_110:0916a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同王心故。",
        "from": "X07n0234_110:0916a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三王發攝言。",
        "from": "X07n0234_110:0916a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大王知此童女(至)令諸眾生普得滿足。",
        "from": "X07n0234_110:0916a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四女讚王德。",
        "from": "X07n0234_110:0916a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標心淨。",
        "from": "X07n0234_110:0916a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時寶光明女信心清淨生大歡喜。",
        "from": "X07n0234_110:0916a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二發口言。",
        "from": "X07n0234_110:0916a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十二偈。",
        "from": "X07n0234_110:0916a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分之為二。",
        "from": "X07n0234_110:0916a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總顯王德四。",
        "from": "X07n0234_110:0916a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明王未興時損。",
        "from": "X07n0234_110:0916a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以偈頌而讚王言。",
        "from": "X07n0234_110:0916a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往昔此城邑大王未出時(至)望之如曠野。",
        "from": "X07n0234_110:0916a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有二偈。",
        "from": "X07n0234_110:0916a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明王興世之益。",
        "from": "X07n0234_110:0916a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王升寶位廣濟諸羣生(至)惸獨悉安隱。",
        "from": "X07n0234_110:0916a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有十偈。",
        "from": "X07n0234_110:0916a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻損成德。",
        "from": "X07n0234_110:0916a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即翻十惡。",
        "from": "X07n0234_110:0916a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往昔諸眾生各各相殘害(至)悉從因緣起。",
        "from": "X07n0234_110:0916a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有七偈。",
        "from": "X07n0234_110:0916a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明依正難思。",
        "from": "X07n0234_110:0916a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王演妙音聞者皆欣樂(至)迴向佛菩提。",
        "from": "X07n0234_110:0916a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二顯王本生四。",
        "from": "X07n0234_110:0916a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明先王世末。",
        "from": "X07n0234_110:0916a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王父淨光明王母蓮華光(至)草樹皆枯槁。",
        "from": "X07n0234_110:0916b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二八偈明王興先相。",
        "from": "X07n0234_110:0916b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王生七日前先現靈瑞相(至)如渴飲美水。",
        "from": "X07n0234_110:0916b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有七偈。",
        "from": "X07n0234_110:0916b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正顯誕生。",
        "from": "X07n0234_110:0916b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼光明王眷屬無量眾(至)汝子應欣慶。",
        "from": "X07n0234_110:0916b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有八偈。",
        "from": "X07n0234_110:0916b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生後之益。",
        "from": "X07n0234_110:0916b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶藏皆涌出寶樹生妙衣(至)一切悉安樂。",
        "from": "X07n0234_110:0916b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三展身敬。",
        "from": "X07n0234_110:0916b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時寶光明童女(至)曲躬恭敬却住一面。",
        "from": "X07n0234_110:0916b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五大王述讚。",
        "from": "X07n0234_110:0916b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼大王告童女言(至)亦當成就如是功德。",
        "from": "X07n0234_110:0916b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六施行攝持。",
        "from": "X07n0234_110:0916b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王讚女已以無價寶衣(至)如淨夜天星宿莊嚴。",
        "from": "X07n0234_110:0916b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二結會古今。",
        "from": "X07n0234_110:0916b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子爾時一切法音(至)處於種種妙法宮殿。",
        "from": "X07n0234_110:0916b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△一偈頌。",
        "from": "X07n0234_110:0916b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是總相。",
        "from": "X07n0234_110:0916b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯己能知。",
        "from": "X07n0234_110:0916b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_110:0916b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初九明能知。",
        "from": "X07n0234_110:0916b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時開敷一切樹華主夜神(至)而說頌言。",
        "from": "X07n0234_110:0916b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有廣大眼普見於十方(至)眾生度多少。",
        "from": "X07n0234_110:0916b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△後有一偈。",
        "from": "X07n0234_110:0916b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結勸。",
        "from": "X07n0234_110:0916b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於無量劫修習此法門我今為汝說佛子汝應學。",
        "from": "X07n0234_110:0916b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四謙己推勝。",
        "from": "X07n0234_110:0916b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我唯知此菩薩(至)能知能說彼功德行。",
        "from": "X07n0234_110:0916b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五指示後友。",
        "from": "X07n0234_110:0916b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子此道場中(至)大願精進力救護一切眾生。",
        "from": "X07n0234_110:0916b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無功用道。",
        "from": "X07n0234_110:0916c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住大願風。",
        "from": "X07n0234_110:0916c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普救護故。",
        "from": "X07n0234_110:0916c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝詣彼問菩薩云何(至)云何修行一切佛法。",
        "from": "X07n0234_110:0916c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六戀德禮辭。",
        "from": "X07n0234_110:0916c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子頂禮其足(至)殷勤瞻仰辭退而去。",
        "from": "X07n0234_110:0916c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已下入第七十三經。",
        "from": "X07n0234_110:0916c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八大願精進力夜神。",
        "from": "X07n0234_110:0916c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄不動地六。",
        "from": "X07n0234_110:0916c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初依教趣求。",
        "from": "X07n0234_110:0916c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子(至)救護一切眾生夜神所。",
        "from": "X07n0234_110:0916c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略無念法。",
        "from": "X07n0234_110:0916c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦表無功離念故。",
        "from": "X07n0234_110:0916c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二見敬諮問。",
        "from": "X07n0234_110:0916c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然亦含二意。",
        "from": "X07n0234_110:0916c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約顯說。",
        "from": "X07n0234_110:0916c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則自此盡偈。",
        "from": "X07n0234_110:0916c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆第二段。",
        "from": "X07n0234_110:0916c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至夜神答言下。",
        "from": "X07n0234_110:0916c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方屬第三授己法界。",
        "from": "X07n0234_110:0916c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約密授。",
        "from": "X07n0234_110:0916c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則此現勝用。",
        "from": "X07n0234_110:0916c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已為授己法界。",
        "from": "X07n0234_110:0916c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財發同善友心。",
        "from": "X07n0234_110:0916c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便已得益。",
        "from": "X07n0234_110:0916c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義雖通二。",
        "from": "X07n0234_110:0916c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲順文。",
        "from": "X07n0234_110:0916c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且依前判。",
        "from": "X07n0234_110:0916c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就文分三。",
        "from": "X07n0234_110:0916c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初見勝用二。",
        "from": "X07n0234_110:0916c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總見所依。",
        "from": "X07n0234_110:0916c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見彼夜神在大眾中(至)摩尼寶網彌覆其上。",
        "from": "X07n0234_110:0916c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別顯身相。",
        "from": "X07n0234_110:0916c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二十四身。",
        "from": "X07n0234_110:0916c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現日月星宿影像身(至)現常游虗空利益身。",
        "from": "X07n0234_110:0916c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上十即應機攝化身。",
        "from": "X07n0234_110:0916c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現一切佛所頂禮身(至)現法燈普滅世暗身。",
        "from": "X07n0234_110:0916c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此六是應法成行身。",
        "from": "X07n0234_110:0916c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現了法如幻淨智身(至)現本清淨法性身。",
        "from": "X07n0234_110:0916c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並是離障契理。",
        "from": "X07n0234_110:0916c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身多隨內德。",
        "from": "X07n0234_110:0916c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯身差別。",
        "from": "X07n0234_110:0916c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見身了心。",
        "from": "X07n0234_110:0916c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二設敬證入四。",
        "from": "X07n0234_110:0916c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初設敬陳禮。",
        "from": "X07n0234_110:0916c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子見如是等(至)良久乃起合掌瞻仰。",
        "from": "X07n0234_110:0916c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二發增勝心。",
        "from": "X07n0234_110:0916c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於善知識生十種心(至)得一切佛法故是為十。",
        "from": "X07n0234_110:0917a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三深證懸同有三。",
        "from": "X07n0234_110:0917a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂標釋結。",
        "from": "X07n0234_110:0917a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今初標。",
        "from": "X07n0234_110:0917a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發是心已得彼夜神與諸菩薩佛剎微塵數同行。",
        "from": "X07n0234_110:0917a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由前起同己等十心。",
        "from": "X07n0234_110:0917a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得同善友等行。",
        "from": "X07n0234_110:0917a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通論同有四義。",
        "from": "X07n0234_110:0917a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一人法無二。",
        "from": "X07n0234_110:0917a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與一切法界同。",
        "from": "X07n0234_110:0917a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二因果無二。",
        "from": "X07n0234_110:0917a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與一切諸佛同。",
        "from": "X07n0234_110:0917a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三自他無二。",
        "from": "X07n0234_110:0917a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與一切菩薩同。",
        "from": "X07n0234_110:0917a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四染淨無二。",
        "from": "X07n0234_110:0917a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與一切眾生同。",
        "from": "X07n0234_110:0917a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今云得彼夜神與諸菩薩同菩薩行。",
        "from": "X07n0234_110:0917a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則正是第三義。",
        "from": "X07n0234_110:0917a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼餘三。",
        "from": "X07n0234_110:0917a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由見初故。",
        "from": "X07n0234_110:0917a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不殊餘二。",
        "from": "X07n0234_110:0917a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方為究竟之同。",
        "from": "X07n0234_110:0917a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以八地證無生理。",
        "from": "X07n0234_110:0917a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他相作。",
        "from": "X07n0234_110:0917a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆無礙故。",
        "from": "X07n0234_110:0917a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏此明同。",
        "from": "X07n0234_110:0917a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故下列中。",
        "from": "X07n0234_110:0917a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無生忍。",
        "from": "X07n0234_110:0917a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二列釋。",
        "from": "X07n0234_110:0917a10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂同念心常憶念(至)成就如來十力智故。",
        "from": "X07n0234_110:0917a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十四同。",
        "from": "X07n0234_110:0917a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有標名釋義。",
        "from": "X07n0234_110:0917a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文相自顯。",
        "from": "X07n0234_110:0917a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三總結。",
        "from": "X07n0234_110:0917a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子觀察大願(至)佛剎微塵數同菩薩行。",
        "from": "X07n0234_110:0917a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四以偈慶讚三。",
        "from": "X07n0234_110:0917a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初有八偈。",
        "from": "X07n0234_110:0917a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌前發增勝心。",
        "from": "X07n0234_110:0917a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既獲此已心轉清淨(至)一心合掌以偈讚曰。",
        "from": "X07n0234_110:0917a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我發堅固意志求無上覺(至)圓滿白淨法。",
        "from": "X07n0234_110:0917a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第頌前十句。",
        "from": "X07n0234_110:0917a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初之六偈。",
        "from": "X07n0234_110:0917a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各頌一句。",
        "from": "X07n0234_110:0917a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七偈中。",
        "from": "X07n0234_110:0917a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上之三句。",
        "from": "X07n0234_110:0917a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌第七句。",
        "from": "X07n0234_110:0917a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下句頌第八。",
        "from": "X07n0234_110:0917a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八偈中上半頌。",
        "from": "X07n0234_110:0917a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九下半頌第十。",
        "from": "X07n0234_110:0917a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有一偈。",
        "from": "X07n0234_110:0917a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌前深證懸同。",
        "from": "X07n0234_110:0917a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以此等故功德悉具足普為諸眾生說一切智道。",
        "from": "X07n0234_110:0917a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有一偈。",
        "from": "X07n0234_110:0917a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷恩深重。",
        "from": "X07n0234_110:0917a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者為我師與我無上法無量無數劫不能報其恩。",
        "from": "X07n0234_110:0917a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三諮問法要。",
        "from": "X07n0234_110:0917a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財說此偈已(至)得阿耨多羅三藐三菩提。",
        "from": "X07n0234_110:0917b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前來已覩解脫之用。",
        "from": "X07n0234_110:0917b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故不問云何修行。",
        "from": "X07n0234_110:0917b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但直徵名。",
        "from": "X07n0234_110:0917b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文有三問。",
        "from": "X07n0234_110:0917b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三授己法界。",
        "from": "X07n0234_110:0917b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前即默授。",
        "from": "X07n0234_110:0917b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今方言授。",
        "from": "X07n0234_110:0917b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有二。",
        "from": "X07n0234_110:0917b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初答名問。",
        "from": "X07n0234_110:0917b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後答發心久近。",
        "from": "X07n0234_110:0917b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以不答成菩提者。",
        "from": "X07n0234_110:0917b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二意故。",
        "from": "X07n0234_110:0917b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一顯悲增。",
        "from": "X07n0234_110:0917b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如休捨說。",
        "from": "X07n0234_110:0917b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二顯久成。",
        "from": "X07n0234_110:0917b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示居因位。",
        "from": "X07n0234_110:0917b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故下所救。",
        "from": "X07n0234_110:0917b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千佛尚已久成。",
        "from": "X07n0234_110:0917b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況能救耶。",
        "from": "X07n0234_110:0917b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前中二。",
        "from": "X07n0234_110:0917b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標名。",
        "from": "X07n0234_110:0917b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜神告言善男子此解脫門名教化眾生令生善根。",
        "from": "X07n0234_110:0917b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂現身廣化。",
        "from": "X07n0234_110:0917b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令生諸善。",
        "from": "X07n0234_110:0917b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟得佛。",
        "from": "X07n0234_110:0917b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為根。",
        "from": "X07n0234_110:0917b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二顯其業用。",
        "from": "X07n0234_110:0917b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂契理之用。",
        "from": "X07n0234_110:0917b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故用而無涯。",
        "from": "X07n0234_110:0917b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動寂無二。",
        "from": "X07n0234_110:0917b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有三。",
        "from": "X07n0234_110:0917b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明內契理事。",
        "from": "X07n0234_110:0917b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以成就此解脫故(至)性皆不實無有差別。",
        "from": "X07n0234_110:0917b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二大用無涯。",
        "from": "X07n0234_110:0917b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而恒示現無量色身所謂種種色身。",
        "from": "X07n0234_110:0917b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約其類別。",
        "from": "X07n0234_110:0917b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非一色身。",
        "from": "X07n0234_110:0917b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非一。",
        "from": "X07n0234_110:0917b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約一類而多。",
        "from": "X07n0234_110:0917b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下可思準。",
        "from": "X07n0234_110:0917b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊色身清淨色身(至)現普賢菩薩像色身。",
        "from": "X07n0234_110:0917b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略顯九十八種色身。",
        "from": "X07n0234_110:0917b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并初後標結。",
        "from": "X07n0234_110:0917b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成百身。",
        "from": "X07n0234_110:0917b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起信等論明八地。",
        "from": "X07n0234_110:0917b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當色自在地故。",
        "from": "X07n0234_110:0917b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此廣辨色身。",
        "from": "X07n0234_110:0917b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三總結深廣四。",
        "from": "X07n0234_110:0917b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初結所作之業。",
        "from": "X07n0234_110:0917b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念中現如是等色相身(至)捨不善業住於善行。",
        "from": "X07n0234_110:0917b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二結能現因。",
        "from": "X07n0234_110:0917b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子當知此由大願力故(至)大慈力故作如是事。",
        "from": "X07n0234_110:0917b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三雙結寂用無礙。",
        "from": "X07n0234_110:0917c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我入此解脫(至)而能示現無量色身。",
        "from": "X07n0234_110:0917c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四結成深廣。",
        "from": "X07n0234_110:0917c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一身現無量色相海(至)三藐三菩提得不退轉。",
        "from": "X07n0234_110:0917c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二答發心久近二。",
        "from": "X07n0234_110:0917c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初歎深許說三。",
        "from": "X07n0234_110:0917c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初牒問許說。",
        "from": "X07n0234_110:0917c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如汝所問(至)承佛神力當為汝說。",
        "from": "X07n0234_110:0917c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二歎法甚深二。",
        "from": "X07n0234_110:0917c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初法說。",
        "from": "X07n0234_110:0917c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子菩薩智輪(至)如是諸劫分別顯示。",
        "from": "X07n0234_110:0917c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上標。",
        "from": "X07n0234_110:0917c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下釋。",
        "from": "X07n0234_110:0917c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先正釋。",
        "from": "X07n0234_110:0917c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故菩薩智論本性清淨。",
        "from": "X07n0234_110:0917c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本性約理。",
        "from": "X07n0234_110:0917c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離一切分別網。",
        "from": "X07n0234_110:0917c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離分別約智。",
        "from": "X07n0234_110:0917c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超一切障礙山。",
        "from": "X07n0234_110:0917c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超障約所。",
        "from": "X07n0234_110:0917c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷後釋妨。",
        "from": "X07n0234_110:0917c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所應化而普照故。",
        "from": "X07n0234_110:0917c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既無長短今說長短者。",
        "from": "X07n0234_110:0917c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利生故。",
        "from": "X07n0234_110:0917c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲長則長。",
        "from": "X07n0234_110:0917c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯法根深。",
        "from": "X07n0234_110:0917c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲短則短。",
        "from": "X07n0234_110:0917c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯法超勝。",
        "from": "X07n0234_110:0917c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二喻顯有五。",
        "from": "X07n0234_110:0917c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初皎日隨時喻。",
        "from": "X07n0234_110:0917c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子譬如日輪無有晝夜但出時名晝沒時名夜。",
        "from": "X07n0234_110:0917c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂日體恒明。",
        "from": "X07n0234_110:0917c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "映山出沒喻。",
        "from": "X07n0234_110:0917c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智無三世心障見殊。",
        "from": "X07n0234_110:0917c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩智輪亦復如是(至)言其止住前劫後劫。",
        "from": "X07n0234_110:0917c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二日輪現影喻。",
        "from": "X07n0234_110:0917c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子譬如日輪(至)而彼淨日不來至此。",
        "from": "X07n0234_110:0917c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂白日無來。",
        "from": "X07n0234_110:0918a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨處隱顯喻。",
        "from": "X07n0234_110:0918a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智輪常寂。",
        "from": "X07n0234_110:0918a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機見短長。",
        "from": "X07n0234_110:0918a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩智輪亦復如是(至)現眾生前教化調伏。",
        "from": "X07n0234_110:0918a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三虗舟運物喻。",
        "from": "X07n0234_110:0918a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子譬如船師常以大船(至)而度眾生無有休息。",
        "from": "X07n0234_110:0918a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻於菩薩無住攝生。",
        "from": "X07n0234_110:0918a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩亦復如是(至)未曾分別劫數長短。",
        "from": "X07n0234_110:0918a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四太虗無礙喻。",
        "from": "X07n0234_110:0918a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子如太虗空一切世界(至)盡未來劫持一切剎。",
        "from": "X07n0234_110:0918a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻於菩薩無功益物。",
        "from": "X07n0234_110:0918a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩亦復如是(至)而無憂喜疲厭之心。",
        "from": "X07n0234_110:0918a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五幻化無真喻。",
        "from": "X07n0234_110:0918a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如幻化人(至)憂喜生死十種之事。",
        "from": "X07n0234_110:0918a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻即用而寂。",
        "from": "X07n0234_110:0918a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩亦復如是(至)無取無捨無安無怖。",
        "from": "X07n0234_110:0918a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然上諸夜神歎深。",
        "from": "X07n0234_110:0918a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆倣斯法喻。",
        "from": "X07n0234_110:0918a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結承力為說。",
        "from": "X07n0234_110:0918a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子菩薩智慧雖復如是(至)滿足大願成就諸力。",
        "from": "X07n0234_110:0918a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正答所問。",
        "from": "X07n0234_110:0918a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先長行。",
        "from": "X07n0234_110:0918a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文三。",
        "from": "X07n0234_110:0918a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初善光劫中行因得法二。",
        "from": "X07n0234_110:0918a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明最初佛所修證三。",
        "from": "X07n0234_110:0918a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初古佛出興。",
        "from": "X07n0234_110:0918a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子乃往古世過世界海(至)已成熟者演說正法。",
        "from": "X07n0234_110:0918a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二先王治化。",
        "from": "X07n0234_110:0918a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時國王名曰勝光(至)調伏彼故造立囹圄。",
        "from": "X07n0234_110:0918a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囹圄者。",
        "from": "X07n0234_110:0918a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周之獄名。",
        "from": "X07n0234_110:0918a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枷鎖禁閉無量眾生於中受苦。",
        "from": "X07n0234_110:0918a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三夜神修因三。",
        "from": "X07n0234_110:0918a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初在家本事十。",
        "from": "X07n0234_110:0918a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初悲救罪人。",
        "from": "X07n0234_110:0918a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正答發心之始。",
        "from": "X07n0234_110:0918a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王有太子名為善伏(至)或以煙熏或被榜笞。",
        "from": "X07n0234_110:0918b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "榜笞捶擊也。",
        "from": "X07n0234_110:0918b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或遭臏割。",
        "from": "X07n0234_110:0918b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臏謂刖足之流。",
        "from": "X07n0234_110:0918b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倮形亂髮飢渴羸瘦(至)願垂寬宥施以無畏。",
        "from": "X07n0234_110:0918b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二臣議非理。",
        "from": "X07n0234_110:0918b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王即集五百大臣(至)有哀救者罪亦至死。",
        "from": "X07n0234_110:0918b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三請代囚命。",
        "from": "X07n0234_110:0918b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼太子悲心轉切(至)應捨身命而拔濟之。",
        "from": "X07n0234_110:0918b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四臣執令誅。",
        "from": "X07n0234_110:0918b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸大臣共詣王所(至)不責治者王之寶祚。",
        "from": "X07n0234_110:0918b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祚即位也。",
        "from": "X07n0234_110:0918b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易云。",
        "from": "X07n0234_110:0918b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人之大寶曰位。",
        "from": "X07n0234_110:0918b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不久立王聞此言赫然大怒令誅太子及諸罪人。",
        "from": "X07n0234_110:0918b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五王后哀祈。",
        "from": "X07n0234_110:0918b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王后聞之愁憂號哭(至)唯願大王赦太子命。",
        "from": "X07n0234_110:0918b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六王奪子志。",
        "from": "X07n0234_110:0918b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王即迴顧語太子言莫救罪人若救罪人必當殺汝。",
        "from": "X07n0234_110:0918b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七太子確救。",
        "from": "X07n0234_110:0918b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時太子為欲專求(至)身當受戮王言隨意。",
        "from": "X07n0234_110:0918b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八母請修因。",
        "from": "X07n0234_110:0918b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時王后白言大王(至)然後治罪王即聽許。",
        "from": "X07n0234_110:0918b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△九正設施場。",
        "from": "X07n0234_110:0918b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時都城北有一大園(至)隨有所求靡不周給。",
        "from": "X07n0234_110:0918b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△十如來親救六。",
        "from": "X07n0234_110:0918c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初就戮時臨。",
        "from": "X07n0234_110:0918c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經半月已於最後日(至)及諸外道悉來集會。",
        "from": "X07n0234_110:0918c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二如來降德。",
        "from": "X07n0234_110:0918c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時法輪音虗空燈王(至)一心瞻仰來入彼會。",
        "from": "X07n0234_110:0918c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三敬神禮請。",
        "from": "X07n0234_110:0918c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時太子及諸大眾(至)攝受於我處于此座。",
        "from": "X07n0234_110:0918c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四就座談經。",
        "from": "X07n0234_110:0918c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛神力淨居諸天(至)令諸眾生隨類各解。",
        "from": "X07n0234_110:0918c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普照因輪者。",
        "from": "X07n0234_110:0918c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂令知善惡各自有因。",
        "from": "X07n0234_110:0918c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪人惡因所招。",
        "from": "X07n0234_110:0918c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太子善因當滿故。",
        "from": "X07n0234_110:0918c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五廣益當機。",
        "from": "X07n0234_110:0918c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼會中有八十那由他(至)免離惡趣生於天上。",
        "from": "X07n0234_110:0918c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六太子得法。",
        "from": "X07n0234_110:0918c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善伏太子即於此時(至)令生善根解脫門。",
        "from": "X07n0234_110:0918c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百一十",
        "from": "X07n0234_110:0918c15_0",
        "context_with_next_sentence": false
    }
]