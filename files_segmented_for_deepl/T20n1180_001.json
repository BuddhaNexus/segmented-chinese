[
    {
        "source_sentence": "六字神呪經",
        "from": "T20n1180_001:0779b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺國三藏菩提流志奉　詔譯",
        "from": "T20n1180_001:0779b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵婆髻馱那(上)莫",
        "from": "T20n1180_001:0779b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此文殊師利六字呪功能我今欲說。",
        "from": "T20n1180_001:0779b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有持此呪欲成就者。",
        "from": "T20n1180_001:0779b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或食乳糜或食菜。",
        "from": "T20n1180_001:0779b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或食菓食乳。",
        "from": "T20n1180_001:0779b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應食此食日別三時洗浴。",
        "from": "T20n1180_001:0779b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂入五更以後為初時。",
        "from": "T20n1180_001:0779b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "午時已後是第二時。",
        "from": "T20n1180_001:0779b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃昏已後至初夜為第三時。",
        "from": "T20n1180_001:0779b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此三時各一度洗浴。",
        "from": "T20n1180_001:0779b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各別著一具淨衣。",
        "from": "T20n1180_001:0779b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故亦須三具淨衣。",
        "from": "T20n1180_001:0779b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪令滿六十萬遍。",
        "from": "T20n1180_001:0779b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為最初承事供養文殊。",
        "from": "T20n1180_001:0779b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若欲受持成就者。",
        "from": "T20n1180_001:0779b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須畫文殊師利像。",
        "from": "T20n1180_001:0779b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其畫像法。",
        "from": "T20n1180_001:0779b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取好白氈勿令有毛髮。",
        "from": "T20n1180_001:0779b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不得割斷纑縷。",
        "from": "T20n1180_001:0779b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彩色不得用膠。",
        "from": "T20n1180_001:0779b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以香汁和畫。",
        "from": "T20n1180_001:0779b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文殊師利像。",
        "from": "T20n1180_001:0779b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華座上結跏趺坐。",
        "from": "T20n1180_001:0779b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作說法手。",
        "from": "T20n1180_001:0779b25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手於懷中仰著。",
        "from": "T20n1180_001:0779b25_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像身作童子形。",
        "from": "T20n1180_001:0779b26_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃金色。",
        "from": "T20n1180_001:0779b26_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天衣作白色遮臍已下。",
        "from": "T20n1180_001:0779b26_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘身皆露。",
        "from": "T20n1180_001:0779b27_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首戴天冠身珮瓔珞臂印釧等。",
        "from": "T20n1180_001:0779b27_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾事莊嚴。",
        "from": "T20n1180_001:0779b28_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左廂畫觀世音像。",
        "from": "T20n1180_001:0779b28_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身白銀色。",
        "from": "T20n1180_001:0779b28_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞衣服莊嚴如常。",
        "from": "T20n1180_001:0779b29_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐蓮華上結跏趺坐。",
        "from": "T20n1180_001:0779b29_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執白拂。",
        "from": "T20n1180_001:0779c01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右廂畫普賢菩薩像。",
        "from": "T20n1180_001:0779c01_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身金色。",
        "from": "T20n1180_001:0779c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞莊嚴如常。",
        "from": "T20n1180_001:0779c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦坐蓮華座右手執白拂。",
        "from": "T20n1180_001:0779c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於文殊上空中兩邊。",
        "from": "T20n1180_001:0779c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各作一首陀會天。",
        "from": "T20n1180_001:0779c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執華鬘。",
        "from": "T20n1180_001:0779c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在空雲內唯現半身。",
        "from": "T20n1180_001:0779c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手垂華鬘。",
        "from": "T20n1180_001:0779c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於文殊像下右邊。",
        "from": "T20n1180_001:0779c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫受持呪者。",
        "from": "T20n1180_001:0779c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地手執香爐。",
        "from": "T20n1180_001:0779c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文殊師利等所坐華下遍畫作池水。",
        "from": "T20n1180_001:0779c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其菩薩像兩邊。",
        "from": "T20n1180_001:0779c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各畫在山峯。",
        "from": "T20n1180_001:0779c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其畫師從起首欲畫之時。",
        "from": "T20n1180_001:0779c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即日日受八戒。",
        "from": "T20n1180_001:0779c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洒浴著淨衣而畫。",
        "from": "T20n1180_001:0779c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至畫了。",
        "from": "T20n1180_001:0779c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有舍利塔即安文殊像。",
        "from": "T20n1180_001:0779c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在塔西面像面向西。",
        "from": "T20n1180_001:0779c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無大塔應以小塔安。",
        "from": "T20n1180_001:0779c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊像前以面向西。",
        "from": "T20n1180_001:0779c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設種種華種種飲食果子等。",
        "from": "T20n1180_001:0779c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三時供養。",
        "from": "T20n1180_001:0779c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道場內然酥燈。",
        "from": "T20n1180_001:0779c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其道場要須在寂靜處。",
        "from": "T20n1180_001:0779c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯令一人供給。",
        "from": "T20n1180_001:0779c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若正在道場誦呪時。",
        "from": "T20n1180_001:0779c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須華香等彈指而索不得出言。",
        "from": "T20n1180_001:0779c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取沈水香截為長二指。",
        "from": "T20n1180_001:0779c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都盧婆香油(蘇合香稀者是)無烟佉陀羅木炭。",
        "from": "T20n1180_001:0779c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無。",
        "from": "T20n1180_001:0779c16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以紫橿木替。",
        "from": "T20n1180_001:0779c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以沈香內前油中。",
        "from": "T20n1180_001:0779c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於像前佉羅木炭火中燒盡一夜。",
        "from": "T20n1180_001:0779c17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至明相出已。",
        "from": "T20n1180_001:0779c17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見文殊師利。",
        "from": "T20n1180_001:0779c18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有求願皆悉滿足。",
        "from": "T20n1180_001:0779c18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除婬欲事。",
        "from": "T20n1180_001:0779c18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自外悉皆不違所求。",
        "from": "T20n1180_001:0779c19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於像前。",
        "from": "T20n1180_001:0779c19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取旃檀截斷長二指還。",
        "from": "T20n1180_001:0779c19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜燒供養。",
        "from": "T20n1180_001:0779c20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時文殊師利即現身當為說法。",
        "from": "T20n1180_001:0779c20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有身患皆悉除愈。",
        "from": "T20n1180_001:0779c21_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得菩薩地自在。",
        "from": "T20n1180_001:0779c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於像前。",
        "from": "T20n1180_001:0779c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷塗地。",
        "from": "T20n1180_001:0779c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散眾名華。",
        "from": "T20n1180_001:0779c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者於塗地場內一邊坐。",
        "from": "T20n1180_001:0779c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪滿一百八遍。",
        "from": "T20n1180_001:0779c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經一月得聰明持一切經論。",
        "from": "T20n1180_001:0779c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法日日隨心常誦莫忘。",
        "from": "T20n1180_001:0779c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定受業報亦令消滅。",
        "from": "T20n1180_001:0779c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若日別能誦滿一百八遍。",
        "from": "T20n1180_001:0779c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時得見文殊師利。",
        "from": "T20n1180_001:0779c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心所願皆得受生。",
        "from": "T20n1180_001:0779c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利為利益眾生故。",
        "from": "T20n1180_001:0779c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸功能中略說少許。",
        "from": "T20n1180_001:0779c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六字神呪經",
        "from": "T20n1180_001:0779c29_0",
        "context_with_next_sentence": false
    }
]