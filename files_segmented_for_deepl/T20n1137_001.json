[
    {
        "source_sentence": "佛說善法方便陀羅尼經",
        "from": "T20n1137_001:0580a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附東晉錄",
        "from": "T20n1137_001:0580a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1137_001:0580a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛住摩竭提界寂滅道場菩提樹下。",
        "from": "T20n1137_001:0580a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與比丘僧大眾俱集。",
        "from": "T20n1137_001:0580a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰大智舍利弗。",
        "from": "T20n1137_001:0580a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老目揵連。",
        "from": "T20n1137_001:0580a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長老阿難。",
        "from": "T20n1137_001:0580a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聲聞等。",
        "from": "T20n1137_001:0580a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩摩訶薩眾。",
        "from": "T20n1137_001:0580a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛幢菩薩。",
        "from": "T20n1137_001:0580a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏菩薩。",
        "from": "T20n1137_001:0580a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩。",
        "from": "T20n1137_001:0580a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是賢劫諸大菩薩摩訶薩眾。",
        "from": "T20n1137_001:0580a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時執金剛神白佛言。",
        "from": "T20n1137_001:0580a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來應供正遍知者。",
        "from": "T20n1137_001:0580a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實知見是善方便陀羅尼呪光明威力。",
        "from": "T20n1137_001:0580a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢能摧滅一切諸惡。",
        "from": "T20n1137_001:0580a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無覆護者能作覆護。",
        "from": "T20n1137_001:0580a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遇一切惡緣知識。",
        "from": "T20n1137_001:0580a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒龍諸鬼夜叉羅剎。",
        "from": "T20n1137_001:0580a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及多那若鳩槃茶人非人等。",
        "from": "T20n1137_001:0580a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怖畏刀杖怨家橫害。",
        "from": "T20n1137_001:0580a29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪魅[示*厭]禱不能嬈亂。",
        "from": "T20n1137_001:0580a29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至四威儀行住坐臥不捨眾生。",
        "from": "T20n1137_001:0580b01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如我今者侍衛如來未曾暫離。",
        "from": "T20n1137_001:0580b02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼於一切時。",
        "from": "T20n1137_001:0580b02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆護眾生利益眾生。",
        "from": "T20n1137_001:0580b03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初不放捨亦復如是。",
        "from": "T20n1137_001:0580b03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我今勸請如來說此陀羅尼。",
        "from": "T20n1137_001:0580b04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼即是菩薩即是大乘。",
        "from": "T20n1137_001:0580b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故若善男子善女人。",
        "from": "T20n1137_001:0580b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無覆護者能為覆護。",
        "from": "T20n1137_001:0580b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉滅一切鬪訟繫縛諸抂橫故。",
        "from": "T20n1137_001:0580b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時佛告執金剛神。",
        "from": "T20n1137_001:0580b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉執金剛神如汝所說。",
        "from": "T20n1137_001:0580b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能如是為眾生故勸請如來。",
        "from": "T20n1137_001:0580b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽當為汝說善法方便陀羅尼呪。",
        "from": "T20n1137_001:0580b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說呪曰。",
        "from": "T20n1137_001:0580b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優鳩(一)茂鳩(二)摩毘尼(奴利反三)摩陀尼(四)婆羅遮隷(五)那休休梨越多莎呵(六)是時如來應正遍知。",
        "from": "T20n1137_001:0580b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是莊嚴大頂勝王陀羅尼已。",
        "from": "T20n1137_001:0580b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告執金剛。",
        "from": "T20n1137_001:0580b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當如是憶念受持。",
        "from": "T20n1137_001:0580b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來今當更為汝說。",
        "from": "T20n1137_001:0580b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1137_001:0580b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跋逝唻(一)跋逝唻(二)跋逝唻陀利(三)跋逝唻婆帝(四)跋逝唻陛帝(五)跋逝唻達提(六)灼迦囉跋逝唻(七)灼迦囉陀唎(八)陀唎(九)陀唎(十)婆[口*梨](十一)茂唎(十二)遮唎(十三)休休唎(十四)朋伽(十五)毘毘利(十六)唎唎尸(十七)唎尸唎(十八)嘍嘍旨(十九)遮隷(二十)周唎(二十一)茂唎(二十二)曼茶唎(二十三)薩波波毘賒兜(二十四)鵄鵄兜比唎(二十五)摩唻(二十六)呵多尼(二十七)婆唻(二十八)婆唻(二十九)婆地(三十)跋提(三十一)毘題(三十二)毘唻(三十三)嘍娑唻(三十四)舍囉鞞(三十五)囉娑泥(三十六)囉婆那唻曳(三十七)[口*梵](父藍反)摩遮唎那(三十八)因陀跋帝(三十九)提提羅耶(四十)那謨摩醯首羅耶尼(四十一)利師[口*梵](父藍反)跋尼(四十二)波波瞻婆尼(四十三)柯羅婆提(四十四)浮多婆提(四十五)薩誃(猪邪反)柯梯(四十六)蘇摩婆提(四十七)蘇摩[口*金*本][口*臘]莎呵(四十八)佛告執金剛。",
        "from": "T20n1137_001:0580b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當為汝更說神呪。",
        "from": "T20n1137_001:0580c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令行者現得長壽。",
        "from": "T20n1137_001:0580c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1137_001:0580c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呵囉(一)呵囉(二)嘻囉(三)",
        "from": "T20n1137_001:0580c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時執金剛即白佛言。",
        "from": "T20n1137_001:0580c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯然世尊我當受持。",
        "from": "T20n1137_001:0580c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦致多(一)波致多(二)阿夷那(三)呵唎瞻婆尼(四)柯葛旦尼(五)頞哆(轉舌音)阿呵尼(六)末伽毘嚧呵尼(七)休娑婆帝(八)復娑婆帝(九)嘻(喜梨反)利(十)嘻利(十一)耶他嗜(十二)耶他忌尼(十三)耶他波爛遮(十四)耶他婆檐(十五)耶他憘陀檐(十六)說是呪已告執金剛。",
        "from": "T20n1137_001:0580c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是善法陀羅尼呪如來所說。",
        "from": "T20n1137_001:0580c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利一切諸眾生故。",
        "from": "T20n1137_001:0580c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慈悲故。",
        "from": "T20n1137_001:0580c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當更為汝說之。",
        "from": "T20n1137_001:0580c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如昔如來應正遍知如是妙說。",
        "from": "T20n1137_001:0580c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去來今佛之所印可誠實不虛。",
        "from": "T20n1137_001:0580c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即放大人眉間相光。",
        "from": "T20n1137_001:0580c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照一切諸佛剎土。",
        "from": "T20n1137_001:0580c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是光所照普能利益無量眾生。",
        "from": "T20n1137_001:0580c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼方諸佛見是光已。",
        "from": "T20n1137_001:0580c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各從坐起咸共尋光來至忍土。",
        "from": "T20n1137_001:0580c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此土已同聲讚言。",
        "from": "T20n1137_001:0580c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉釋迦牟尼世尊善能付囑。",
        "from": "T20n1137_001:0580c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益安樂一切眾生。",
        "from": "T20n1137_001:0580c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦如來應正遍知。",
        "from": "T20n1137_001:0580c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利一切諸眾生故。",
        "from": "T20n1137_001:0580c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為覆護故為照明故。",
        "from": "T20n1137_001:0580c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令眾生得歡喜故。",
        "from": "T20n1137_001:0580c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是善法陀羅尼呪。",
        "from": "T20n1137_001:0580c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等諸佛所說章句亦皆如是。",
        "from": "T20n1137_001:0580c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉釋迦能廣施者。",
        "from": "T20n1137_001:0580c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子及善女人。",
        "from": "T20n1137_001:0580c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是善法陀羅尼呪欲得利益。",
        "from": "T20n1137_001:0580c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於晨朝受持讀誦。",
        "from": "T20n1137_001:0580c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為我等諸佛所護。",
        "from": "T20n1137_001:0580c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有誦持此呪之處則為吉祥。",
        "from": "T20n1137_001:0580c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等諸佛皆在中故。",
        "from": "T20n1137_001:0580c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸眾生先來所造。",
        "from": "T20n1137_001:0580c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極重惡業皆滅無餘。",
        "from": "T20n1137_001:0580c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令此諸善男子等。",
        "from": "T20n1137_001:0580c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足獲得二十善利。",
        "from": "T20n1137_001:0580c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者現得長壽。",
        "from": "T20n1137_001:0580c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者舍宅安隱。",
        "from": "T20n1137_001:0580c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者名譽遠聞。",
        "from": "T20n1137_001:0580c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者現得尊貴。",
        "from": "T20n1137_001:0580c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者多宜財寶。",
        "from": "T20n1137_001:0580c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者威貌殊勝。",
        "from": "T20n1137_001:0581a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者勇捍無畏。",
        "from": "T20n1137_001:0581a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者無諸疾病。",
        "from": "T20n1137_001:0581a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者安隱快樂。",
        "from": "T20n1137_001:0581a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者進行無倦。",
        "from": "T20n1137_001:0581a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一者諸佛護念。",
        "from": "T20n1137_001:0581a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二者諸天守護。",
        "from": "T20n1137_001:0581a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三人所愛敬。",
        "from": "T20n1137_001:0581a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四現見諸佛。",
        "from": "T20n1137_001:0581a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五善友所護。",
        "from": "T20n1137_001:0581a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六毒害不加。",
        "from": "T20n1137_001:0581a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七惡鬼降伏。",
        "from": "T20n1137_001:0581a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八怨敵自消。",
        "from": "T20n1137_001:0581a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九眷屬成就。",
        "from": "T20n1137_001:0581a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十善願從心。",
        "from": "T20n1137_001:0581a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是執金剛。",
        "from": "T20n1137_001:0581a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼呪即是諸佛微密藏處。",
        "from": "T20n1137_001:0581a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛之所護念。",
        "from": "T20n1137_001:0581a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實不虛微妙善說。",
        "from": "T20n1137_001:0581a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時執金剛神白佛言。",
        "from": "T20n1137_001:0581a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我於如來所說神呪。",
        "from": "T20n1137_001:0581a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當隨喜信樂演說。",
        "from": "T20n1137_001:0581a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何是陀羅尼神呪勢力。",
        "from": "T20n1137_001:0581a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無覆護者能為覆護。",
        "from": "T20n1137_001:0581a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多利益故。",
        "from": "T20n1137_001:0581a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為如是等諸善男子善女人故。",
        "from": "T20n1137_001:0581a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當更演說善法陀羅尼呪。",
        "from": "T20n1137_001:0581a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得安樂及求度者。",
        "from": "T20n1137_001:0581a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸行人應於晨朝受持讀誦。",
        "from": "T20n1137_001:0581a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則得神呪擁護之力。",
        "from": "T20n1137_001:0581a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必當永離一切苦惱。",
        "from": "T20n1137_001:0581a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1137_001:0581a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尸棄(一)尸棄(二)支至(三)支至(四)婆嘙(五)婆嘙(六)嚧嘍(七)嚧嘍(八)時嗜(九)時嗜(十)咖囉(十一)咖囉(十二)[噓*予]嘻(十三)[噓*予]嘻(十四)頗破(十五)頗破(十六)磨系(十七)磨系(十八)呵那(十九)呵那(二十)呵那(二十一)馱呵(二十二)馱呵(二十三)馱呵(二十四)波遮(二十五)波遮(二十六)莎呵(二十七)是時世尊告執金剛。",
        "from": "T20n1137_001:0581a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉執金剛神。",
        "from": "T20n1137_001:0581a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼最神最驗。",
        "from": "T20n1137_001:0581a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生是故說之。",
        "from": "T20n1137_001:0581a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼神呪威力。",
        "from": "T20n1137_001:0581a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能障蔽一一毛孔。",
        "from": "T20n1137_001:0581a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍鬼一切疾疫。",
        "from": "T20n1137_001:0581a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾邪毒氣不能得入。",
        "from": "T20n1137_001:0581a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能為作解脫因緣。",
        "from": "T20n1137_001:0581a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時三千大千界主大梵天王。",
        "from": "T20n1137_001:0581a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起為佛作禮。",
        "from": "T20n1137_001:0581a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛而白佛言。",
        "from": "T20n1137_001:0581a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉世尊我今亦樂讚揚隨喜利益成就。",
        "from": "T20n1137_001:0581a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善男子行此呪者。",
        "from": "T20n1137_001:0581a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於晨朝受持讀誦是陀羅尼。",
        "from": "T20n1137_001:0581a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今世尊為欲利安擁護如是諸眾生故。",
        "from": "T20n1137_001:0581a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此善法陀羅尼呪時。",
        "from": "T20n1137_001:0581b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵王即說呪曰。",
        "from": "T20n1137_001:0581b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[噓*予]利(一)彌利(二)旨利莎呵(三)[口*梵]摩富唎莎呵(四)[口*梵]摩[口*譬]莎呵(五)波劫[口*譬](六)弗巴僧怛唎莎呵(七)說是呪已即白佛言。",
        "from": "T20n1137_001:0581b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大德勝尊如是所說陀羅尼呪能悉擁護。",
        "from": "T20n1137_001:0581b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子及善女人。",
        "from": "T20n1137_001:0581b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能令得增益壽命。",
        "from": "T20n1137_001:0581b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者應當晨朝。",
        "from": "T20n1137_001:0581b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法讀誦修行受持。",
        "from": "T20n1137_001:0581b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋提桓因復白佛言。",
        "from": "T20n1137_001:0581b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今亦欲利益擁護如是善男子故。",
        "from": "T20n1137_001:0581b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼者諸佛世尊之所護念。",
        "from": "T20n1137_001:0581b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者若欲得是陀羅尼呪功德利者。",
        "from": "T20n1137_001:0581b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於晨朝讀誦受持。",
        "from": "T20n1137_001:0581b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時帝釋即說呪曰。",
        "from": "T20n1137_001:0581b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘尼婆囉泥(一)婆陀磨囒帝(二)致致致(三)懼利乾陀唎(四)摩囉摩羅婆(五)呵那末彈陀羅尼(六)陀羅摩利尼(七)斫迦婆呮(八)扇跋唎(九)扇婆唎莎呵(十)爾時復有四大天王毘沙門天王提頭賴吒天王毘樓勒叉天王毘樓博叉天王。",
        "from": "T20n1137_001:0581b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬而白佛言。",
        "from": "T20n1137_001:0581b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等四王亦當為護是善男子善女人等。",
        "from": "T20n1137_001:0581b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂欲修行是善方便陀羅尼者。",
        "from": "T20n1137_001:0581b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸眾生亦應晨朝受持讀誦。",
        "from": "T20n1137_001:0581b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四王即說呪曰。",
        "from": "T20n1137_001:0581b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弗巴(一)修弗巴(二)頭摩波利呵唻(三)阿唎波羅世帝(四)扇帝(五)涅目帝(六)帽伽隷(七)兜帝(八)兜帝莎呵(九)爾時釋迦牟尼如來。",
        "from": "T20n1137_001:0581b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即舉右手告天帝釋大梵天王及四護世。",
        "from": "T20n1137_001:0581b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉大德諸天乃能於是善法方便陀羅尼王隨喜演說。",
        "from": "T20n1137_001:0581b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此善法陀羅尼者。",
        "from": "T20n1137_001:0581b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是諸佛之所護念。",
        "from": "T20n1137_001:0581b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等應當常善受持。",
        "from": "T20n1137_001:0581b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊又復重告執金剛神。",
        "from": "T20n1137_001:0581c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉執金剛神。",
        "from": "T20n1137_001:0581c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善方便及得長壽陀羅尼呪。",
        "from": "T20n1137_001:0581c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三呪者。",
        "from": "T20n1137_001:0581c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是十方諸佛如來之所護念稱讚印可。",
        "from": "T20n1137_001:0581c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天天王大力鬼神之所守護。",
        "from": "T20n1137_001:0581c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人等。",
        "from": "T20n1137_001:0581c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲修行者。",
        "from": "T20n1137_001:0581c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當自淨身口意已。",
        "from": "T20n1137_001:0581c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於晨朝時以殷重心。",
        "from": "T20n1137_001:0581c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法受持淨心讀誦。",
        "from": "T20n1137_001:0581c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能如是者不見天龍諸惡人鬼。",
        "from": "T20n1137_001:0581c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能加害得其便者。",
        "from": "T20n1137_001:0581c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時菩薩聲聞大眾執金剛神。",
        "from": "T20n1137_001:0581c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸天王一切鬼神龍王夜叉人非人等。",
        "from": "T20n1137_001:0581c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸共恭敬皆大歡喜受持奉行。",
        "from": "T20n1137_001:0581c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說善法方便陀羅尼經",
        "from": "T20n1137_001:0581c11_0",
        "context_with_next_sentence": false
    }
]