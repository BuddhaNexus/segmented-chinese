[
    {
        "source_sentence": "提婆菩薩傳",
        "from": "T50n2048_001:0186c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姚秦三藏鳩摩羅什譯",
        "from": "T50n2048_001:0186c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆菩薩者南天竺人。",
        "from": "T50n2048_001:0186c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹菩薩弟子婆羅門種也。",
        "from": "T50n2048_001:0186c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博識淵攬。",
        "from": "T50n2048_001:0186c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "才辯絕倫。",
        "from": "T50n2048_001:0186c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擅名天竺為諸國所推。",
        "from": "T50n2048_001:0186c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賾探胸懷既無所愧。",
        "from": "T50n2048_001:0186c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為所不盡者唯以人不信用其言為憂。",
        "from": "T50n2048_001:0186c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國中有大天神。",
        "from": "T50n2048_001:0186c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑄黃金像之座身長二丈。",
        "from": "T50n2048_001:0186c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號曰大自在天。",
        "from": "T50n2048_001:0186c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人有求願能令現世如意。",
        "from": "T50n2048_001:0186c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆詣廟求入拜見。",
        "from": "T50n2048_001:0186c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主廟者言。",
        "from": "T50n2048_001:0186c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天像至神人有見者既不敢正視。",
        "from": "T50n2048_001:0186c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又令人退後失守百日。",
        "from": "T50n2048_001:0186c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝但詣問求願何須見耶。",
        "from": "T50n2048_001:0186c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆言若神必能如汝所說乃但令我見之。",
        "from": "T50n2048_001:0186c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不如是豈是吾之所欲見耶。",
        "from": "T50n2048_001:0186c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人奇其志氣伏其明正。",
        "from": "T50n2048_001:0186c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追入廟者數千萬人。",
        "from": "T50n2048_001:0186c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆既入於廟。",
        "from": "T50n2048_001:0186c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天像搖動其眼怒目視之。",
        "from": "T50n2048_001:0186c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆問天神則神矣何其小也。",
        "from": "T50n2048_001:0186c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以威靈感人智德伏物。",
        "from": "T50n2048_001:0186c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而假黃金以自多。",
        "from": "T50n2048_001:0186c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動頗梨以熒惑非所望也。",
        "from": "T50n2048_001:0186c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便登梯鑿出其眼。",
        "from": "T50n2048_001:0186c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸觀者咸有疑意。",
        "from": "T50n2048_001:0186c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大自在天何為一小婆羅門所困。",
        "from": "T50n2048_001:0186c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將無名過其實理屈其辭也。",
        "from": "T50n2048_001:0186c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆曉眾人言神明遠大。",
        "from": "T50n2048_001:0186c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以近事試我。",
        "from": "T50n2048_001:0186c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我得其心故登金聚出頗梨。",
        "from": "T50n2048_001:0186c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令汝等知神不假質精不託形。",
        "from": "T50n2048_001:0186c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾既不慢神亦不辱也。",
        "from": "T50n2048_001:0187a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言已而出。",
        "from": "T50n2048_001:0187a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以其夜求諸供備。",
        "from": "T50n2048_001:0187a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日清旦敬祠天神。",
        "from": "T50n2048_001:0187a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆先名既重加以智參神契。",
        "from": "T50n2048_001:0187a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其所發言聲之所及無不響應。",
        "from": "T50n2048_001:0187a03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夜之中供具精饌有物必備。",
        "from": "T50n2048_001:0187a04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大自在天貫一肉形高數四丈。",
        "from": "T50n2048_001:0187a04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左眼枯涸而來在坐。",
        "from": "T50n2048_001:0187a05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觀供饌歎未曾有。",
        "from": "T50n2048_001:0187a06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉其德力能有所致。",
        "from": "T50n2048_001:0187a06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而告之言汝得我心。",
        "from": "T50n2048_001:0187a07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人得我形汝以心供人以質饋知。",
        "from": "T50n2048_001:0187a07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而敬我者汝畏而誣我者人汝所供饌盡善盡美矣。",
        "from": "T50n2048_001:0187a08_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯無我之所須能以見與者真上施也。",
        "from": "T50n2048_001:0187a09_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆言神鑑我心唯命是從。",
        "from": "T50n2048_001:0187a10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神言我所乏者左眼能施我者便可出之。",
        "from": "T50n2048_001:0187a11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆言敬如天命即以左手出眼與之。",
        "from": "T50n2048_001:0187a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天神力故出而隨生。",
        "from": "T50n2048_001:0187a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "索之不已從旦終朝出眼數萬。",
        "from": "T50n2048_001:0187a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天神讚曰。",
        "from": "T50n2048_001:0187a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉摩納真上施也。",
        "from": "T50n2048_001:0187a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求何願必如汝意。",
        "from": "T50n2048_001:0187a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆言我稟明於心不假外也。",
        "from": "T50n2048_001:0187a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯恨悠悠童矇。",
        "from": "T50n2048_001:0187a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知信受我言。",
        "from": "T50n2048_001:0187a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神賜我願必當令我言不虛設。",
        "from": "T50n2048_001:0187a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯此為請他無所須。",
        "from": "T50n2048_001:0187a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神言必如所願。",
        "from": "T50n2048_001:0187a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是而退詣龍樹菩薩。",
        "from": "T50n2048_001:0187a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受出家法剃頭法服周遊揚化。",
        "from": "T50n2048_001:0187a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺王總御諸國信用邪道。",
        "from": "T50n2048_001:0187a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門釋子一不得見。",
        "from": "T50n2048_001:0187a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國人遠近皆化其道。",
        "from": "T50n2048_001:0187a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆念曰。",
        "from": "T50n2048_001:0187a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹不伐本則條不傾。",
        "from": "T50n2048_001:0187a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人主不化則道不行。",
        "from": "T50n2048_001:0187a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國政法王家出錢雇人宿衛。",
        "from": "T50n2048_001:0187a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆乃應募為其將。",
        "from": "T50n2048_001:0187a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷戟前驅。",
        "from": "T50n2048_001:0187a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "整行伍勒部曲。",
        "from": "T50n2048_001:0187a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威不嚴而令行。",
        "from": "T50n2048_001:0187a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德不彰而物樂隨。",
        "from": "T50n2048_001:0187a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王甚喜之而問是何人。",
        "from": "T50n2048_001:0187a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者答言此人應募。",
        "from": "T50n2048_001:0187a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既不食廩又不取錢。",
        "from": "T50n2048_001:0187a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而其在事恭謹閑習如此。",
        "from": "T50n2048_001:0187a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知其意何求何欲。",
        "from": "T50n2048_001:0187a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王召而問之汝是何人。",
        "from": "T50n2048_001:0187a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言我是一切智人。",
        "from": "T50n2048_001:0187a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王大驚愕而問之。",
        "from": "T50n2048_001:0187a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言一切智人曠代一有。",
        "from": "T50n2048_001:0187a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝自言是何以驗之。",
        "from": "T50n2048_001:0187a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言欲知智在說。",
        "from": "T50n2048_001:0187b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王當見問。",
        "from": "T50n2048_001:0187b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王即自念我為智主大論議師。",
        "from": "T50n2048_001:0187b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問之能屈猶不足名。",
        "from": "T50n2048_001:0187b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一旦不如此非小事。",
        "from": "T50n2048_001:0187b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若其不問便是一屈。",
        "from": "T50n2048_001:0187b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持疑良久。",
        "from": "T50n2048_001:0187b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得已而問天今何為耶。",
        "from": "T50n2048_001:0187b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆言天今與阿修羅戰。",
        "from": "T50n2048_001:0187b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王得此言譬如人噎既不得吐又不得咽。",
        "from": "T50n2048_001:0187b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲非其言復無以證之。",
        "from": "T50n2048_001:0187b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲是其事無事可明。",
        "from": "T50n2048_001:0187b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未言之間。",
        "from": "T50n2048_001:0187b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆復言。",
        "from": "T50n2048_001:0187b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非虛論求勝之言。",
        "from": "T50n2048_001:0187b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王小待須臾有驗。",
        "from": "T50n2048_001:0187b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖空中便有干戈來下。",
        "from": "T50n2048_001:0187b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長戟短兵相係而落。",
        "from": "T50n2048_001:0187b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言干戈矛戟雖是戰器。",
        "from": "T50n2048_001:0187b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何必知是天與阿修羅戰。",
        "from": "T50n2048_001:0187b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆言構之虛言。",
        "from": "T50n2048_001:0187b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如校以實事。",
        "from": "T50n2048_001:0187b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言已阿修羅手足指及其耳鼻從空而下。",
        "from": "T50n2048_001:0187b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王乃稽首伏其法化。",
        "from": "T50n2048_001:0187b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殿上有萬婆羅門。",
        "from": "T50n2048_001:0187b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆棄其束髮受成就戒。",
        "from": "T50n2048_001:0187b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時提婆於王都中建．高座立三論。",
        "from": "T50n2048_001:0187b14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言一切諸聖中佛聖最第一。",
        "from": "T50n2048_001:0187b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法中佛法正第一一切救世中佛僧為第一。",
        "from": "T50n2048_001:0187b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八方諸論士有能壞此語者。",
        "from": "T50n2048_001:0187b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當斬首以謝其屈。",
        "from": "T50n2048_001:0187b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T50n2048_001:0187b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立理不明是為愚癡。",
        "from": "T50n2048_001:0187b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡之頭非我所須。",
        "from": "T50n2048_001:0187b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斬以謝屈甚不惜也。",
        "from": "T50n2048_001:0187b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八方論士既聞此言亦各來集。",
        "from": "T50n2048_001:0187b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而立誓言。",
        "from": "T50n2048_001:0187b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等不如亦當斬首。",
        "from": "T50n2048_001:0187b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡之頭亦所不惜。",
        "from": "T50n2048_001:0187b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆言我所修法仁活萬物。",
        "from": "T50n2048_001:0187b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要不如者。",
        "from": "T50n2048_001:0187b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當剃汝鬚髮以為弟子。",
        "from": "T50n2048_001:0187b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須斬首也。",
        "from": "T50n2048_001:0187b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立此要已各撰名理建無方論。",
        "from": "T50n2048_001:0187b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而與酬酢。",
        "from": "T50n2048_001:0187b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智淺情短者一言便屈。",
        "from": "T50n2048_001:0187b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智深情長者遠至二日。",
        "from": "T50n2048_001:0187b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則辭理俱匱。",
        "from": "T50n2048_001:0187b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即皆下髮。",
        "from": "T50n2048_001:0187b25_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是日日王家日送十車衣鉢終竟。",
        "from": "T50n2048_001:0187b26_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三月度百餘萬人。",
        "from": "T50n2048_001:0187b26_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一邪道弟子凶頑無智。",
        "from": "T50n2048_001:0187b27_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恥其師屈形雖隨眾。",
        "from": "T50n2048_001:0187b27_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心結怨忿囓刀自誓。",
        "from": "T50n2048_001:0187b28_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝以口勝伏我。",
        "from": "T50n2048_001:0187b28_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當以刀勝伏汝。",
        "from": "T50n2048_001:0187b29_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝以空刀困我。",
        "from": "T50n2048_001:0187b29_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以實刀困汝。",
        "from": "T50n2048_001:0187c01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是誓已挾一利刀伺求其便。",
        "from": "T50n2048_001:0187c01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸方論士英傑都盡。",
        "from": "T50n2048_001:0187c02_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆於是出就閑林。",
        "from": "T50n2048_001:0187c02_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造百論二十品。",
        "from": "T50n2048_001:0187c03_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又造四百論以破邪見。",
        "from": "T50n2048_001:0187c03_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其諸弟子各各散諸樹下坐禪思惟。",
        "from": "T50n2048_001:0187c03_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆從禪覺經行。",
        "from": "T50n2048_001:0187c04_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門弟子來到其邊執刀窮之曰。",
        "from": "T50n2048_001:0187c05_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝以口破我師何如我以刀破汝腹。",
        "from": "T50n2048_001:0187c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以刀決之五藏委地命未絕間。",
        "from": "T50n2048_001:0187c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍此愚賊而告之曰。",
        "from": "T50n2048_001:0187c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾有三衣鉢釪在吾坐處汝可取之。",
        "from": "T50n2048_001:0187c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急上山去慎勿下就平道。",
        "from": "T50n2048_001:0187c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我諸弟子未得法忍者。",
        "from": "T50n2048_001:0187c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必當捉汝或當相得送汝於官。",
        "from": "T50n2048_001:0187c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王便困汝汝未得法利。",
        "from": "T50n2048_001:0187c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜身情重惜名次之。",
        "from": "T50n2048_001:0187c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身之與名患累出焉。",
        "from": "T50n2048_001:0187c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾釁生焉。",
        "from": "T50n2048_001:0187c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身名者乃是大患之本也。",
        "from": "T50n2048_001:0187c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人無聞為妄見所侵。",
        "from": "T50n2048_001:0187c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜其所不惜。",
        "from": "T50n2048_001:0187c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不惜所應惜。",
        "from": "T50n2048_001:0187c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不亦哀哉。",
        "from": "T50n2048_001:0187c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾蒙佛之遺法不復爾也。",
        "from": "T50n2048_001:0187c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但念汝等為狂心所欺。",
        "from": "T50n2048_001:0187c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿毒所燒罪報未已。",
        "from": "T50n2048_001:0187c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號泣受之。",
        "from": "T50n2048_001:0187c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受之者實自無主。",
        "from": "T50n2048_001:0187c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為之者實自無人。",
        "from": "T50n2048_001:0187c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無人無主哀酷者。",
        "from": "T50n2048_001:0187c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰以實求之。",
        "from": "T50n2048_001:0187c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實不可得。",
        "from": "T50n2048_001:0187c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未悟此者。",
        "from": "T50n2048_001:0187c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為狂心所惑。",
        "from": "T50n2048_001:0187c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒所迴見得心著。",
        "from": "T50n2048_001:0187c18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有我有人有苦有樂。",
        "from": "T50n2048_001:0187c19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦樂之來但依觸著。",
        "from": "T50n2048_001:0187c19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解著則無依。",
        "from": "T50n2048_001:0187c20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無依則無苦。",
        "from": "T50n2048_001:0187c20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無苦則無樂。",
        "from": "T50n2048_001:0187c20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦樂既無則幾乎息矣。",
        "from": "T50n2048_001:0187c21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此語已弟子先來者失聲大喚。",
        "from": "T50n2048_001:0187c21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門人各各從林樹間集。",
        "from": "T50n2048_001:0187c22_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得法忍者驚怖號咷拊匃扣地。",
        "from": "T50n2048_001:0187c22_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冤哉酷哉誰取我師乃如是者。",
        "from": "T50n2048_001:0187c23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有狂突奔走追截要路。",
        "from": "T50n2048_001:0187c24_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共相分部號叫追之聲聒幽谷。",
        "from": "T50n2048_001:0187c24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆誨諸人言諸法之實。",
        "from": "T50n2048_001:0187c25_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰冤誰酷誰割誰截。",
        "from": "T50n2048_001:0187c26_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法之實實無受者亦無害者。",
        "from": "T50n2048_001:0187c26_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰親誰怨誰賊誰害。",
        "from": "T50n2048_001:0187c27_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝為癡毒所欺。",
        "from": "T50n2048_001:0187c27_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄生著見而大號咷種不善業。",
        "from": "T50n2048_001:0187c28_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人所害害諸業報非害我也。",
        "from": "T50n2048_001:0187c28_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等思之慎無以狂追狂以哀悲哀也。",
        "from": "T50n2048_001:0187c29_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是放身脫然無矜遂蟬蛻而去初出眼與神故遂無一眼。",
        "from": "T50n2048_001:0188a01_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人號曰迦那提婆也。",
        "from": "T50n2048_001:0188a02_43",
        "context_with_next_sentence": false
    }
]