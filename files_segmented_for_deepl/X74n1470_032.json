    {
        "source_sentence": "世出世神。",
        "from": "X74n1470_032:0309c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲本願。",
        "from": "X74n1470_032:0309c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明。",
        "from": "X74n1470_032:0309c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照於法會。",
        "from": "X74n1470_032:0309c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證盟護念。",
        "from": "X74n1470_032:0310a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀憫攝受。",
        "from": "X74n1470_032:0310a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我及一切眾生海。",
        "from": "X74n1470_032:0310a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自從無始直至今時。",
        "from": "X74n1470_032:0310a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業海無盡。",
        "from": "X74n1470_032:0310a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝網重重。",
        "from": "X74n1470_032:0310a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百萬障門惑業。",
        "from": "X74n1470_032:0310a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發露懺悔。",
        "from": "X74n1470_032:0310a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢行品云。",
        "from": "X74n1470_032:0310a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛世尊。",
        "from": "X74n1470_032:0310a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生無智作惡。",
        "from": "X74n1470_032:0310a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計我我所。",
        "from": "X74n1470_032:0310a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執著於身。",
        "from": "X74n1470_032:0310a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒疑惑。",
        "from": "X74n1470_032:0310a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪見分別。",
        "from": "X74n1470_032:0310a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸結縛。",
        "from": "X74n1470_032:0310a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒共相應。",
        "from": "X74n1470_032:0310a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨生死流。",
        "from": "X74n1470_032:0310a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠如來道故。",
        "from": "X74n1470_032:0310a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出興於世。",
        "from": "X74n1470_032:0310a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "X74n1470_032:0310a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不見一法為大過失。",
        "from": "X74n1470_032:0310a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如諸菩薩於他菩薩起嗔心者。",
        "from": "X74n1470_032:0310a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X74n1470_032:0310a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "X74n1470_032:0310a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩於餘菩薩。",
        "from": "X74n1470_032:0310a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起嗔恚心。",
        "from": "X74n1470_032:0310a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成就百萬障門故。",
        "from": "X74n1470_032:0310a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為百萬障。",
        "from": "X74n1470_032:0310a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂不見菩提障。",
        "from": "X74n1470_032:0310a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聞正法障。",
        "from": "X74n1470_032:0310a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生不淨世界障。",
        "from": "X74n1470_032:0310a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生諸惡趣障。",
        "from": "X74n1470_032:0310a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生諸難處障。",
        "from": "X74n1470_032:0310a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多諸疾病障。",
        "from": "X74n1470_032:0310a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多被謗毀障。",
        "from": "X74n1470_032:0310a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生頑鈍諸趣障。",
        "from": "X74n1470_032:0310a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞失正念障。",
        "from": "X74n1470_032:0310a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "缺少智慧障。",
        "from": "X74n1470_032:0310a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼障耳障。",
        "from": "X74n1470_032:0310a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻障舌障。",
        "from": "X74n1470_032:0310a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身障意障。",
        "from": "X74n1470_032:0310a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡知識障。",
        "from": "X74n1470_032:0310a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡伴黨障。",
        "from": "X74n1470_032:0310a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂習小乘障。",
        "from": "X74n1470_032:0310a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂近凡庸障。",
        "from": "X74n1470_032:0310a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信樂大威德人障。",
        "from": "X74n1470_032:0310a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂與離正見人同住障。",
        "from": "X74n1470_032:0310a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生外道家障。",
        "from": "X74n1470_032:0310a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住魔境界障。",
        "from": "X74n1470_032:0310a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離佛正教障。",
        "from": "X74n1470_032:0310a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見善友障。",
        "from": "X74n1470_032:0310a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善根留難障。",
        "from": "X74n1470_032:0310a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增不善法障。",
        "from": "X74n1470_032:0310a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得下劣處障。",
        "from": "X74n1470_032:0310a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生邊地障。",
        "from": "X74n1470_032:0310a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生惡人家障。",
        "from": "X74n1470_032:0310a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生惡神中障。",
        "from": "X74n1470_032:0310a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生惡龍惡夜叉惡乾闥婆惡阿修羅惡迦樓羅惡緊那羅惡摩睺羅伽惡羅剎中障。",
        "from": "X74n1470_032:0310a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是十信障。",
        "from": "X74n1470_032:0310a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今皆懺悔。",
        "from": "X74n1470_032:0310a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不樂佛法障。",
        "from": "X74n1470_032:0310a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習童蒙法障。",
        "from": "X74n1470_032:0310a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂著小乘障。",
        "from": "X74n1470_032:0310a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不樂大乘障。",
        "from": "X74n1470_032:0310a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性多驚怖障。",
        "from": "X74n1470_032:0310a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心常憂惱障。",
        "from": "X74n1470_032:0310a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛著生死障。",
        "from": "X74n1470_032:0310a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不專佛法障。",
        "from": "X74n1470_032:0310a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不喜見聞佛自在神通障。",
        "from": "X74n1470_032:0310a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是十住障。",
        "from": "X74n1470_032:0310a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今皆懺悔。",
        "from": "X74n1470_032:0310a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得菩薩諸根障。",
        "from": "X74n1470_032:0310a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不行菩薩淨行障。",
        "from": "X74n1470_032:0310a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退怯菩薩深心障。",
        "from": "X74n1470_032:0310a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生菩薩大願障。",
        "from": "X74n1470_032:0310a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不發一切智心障。",
        "from": "X74n1470_032:0310a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩行懈怠障。",
        "from": "X74n1470_032:0310a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能淨治諸業障。",
        "from": "X74n1470_032:0310a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能攝取大福障。",
        "from": "X74n1470_032:0310a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智力不能明利障。",
        "from": "X74n1470_032:0310a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷於廣大智慧障。",
        "from": "X74n1470_032:0310b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不獲持菩薩諸行障。",
        "from": "X74n1470_032:0310b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是十行障。",
        "from": "X74n1470_032:0310b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今皆懺悔。",
        "from": "X74n1470_032:0310b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂誹謗一切智語障。",
        "from": "X74n1470_032:0310b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離諸佛菩提障。",
        "from": "X74n1470_032:0310b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂住眾魔境障界。",
        "from": "X74n1470_032:0310b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不專修佛境界障。",
        "from": "X74n1470_032:0310b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不決定發菩薩弘誓障。",
        "from": "X74n1470_032:0310b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是十迴向障。",
        "from": "X74n1470_032:0310b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今皆懺悔。",
        "from": "X74n1470_032:0310b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不樂與菩薩同住障。",
        "from": "X74n1470_032:0310b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求菩薩善根障。",
        "from": "X74n1470_032:0310b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性多見疑障。",
        "from": "X74n1470_032:0310b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心常愚暗障。",
        "from": "X74n1470_032:0310b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能行菩薩平等施故起不捨障。",
        "from": "X74n1470_032:0310b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能持如來戒故起破戒障。",
        "from": "X74n1470_032:0310b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能入堪忍門故起愚癡惱害嗔恚障。",
        "from": "X74n1470_032:0310b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能行菩薩大精進故起懈怠垢障。",
        "from": "X74n1470_032:0310b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能得諸三昧故起散亂障。",
        "from": "X74n1470_032:0310b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不修治般若波羅蜜故起惡慧障。",
        "from": "X74n1470_032:0310b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於處非處中無善巧障。",
        "from": "X74n1470_032:0310b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於度眾生中無方便障。",
        "from": "X74n1470_032:0310b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩智慧中不能觀察障。",
        "from": "X74n1470_032:0310b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩出離法中不能了知障。",
        "from": "X74n1470_032:0310b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不成就菩薩十種廣大眼故眼如生盲障。",
        "from": "X74n1470_032:0310b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳不聞無礙法故口如瘂羊障。",
        "from": "X74n1470_032:0310b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不具相好故鼻根破壞障。",
        "from": "X74n1470_032:0310b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能辨了眾生語言故成就舌根障。",
        "from": "X74n1470_032:0310b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕賤眾生故成就身根障。",
        "from": "X74n1470_032:0310b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心多狂亂故成就意根障。",
        "from": "X74n1470_032:0310b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不持三種律儀故成就身業障。",
        "from": "X74n1470_032:0310b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒起四種過失故成就語業障。",
        "from": "X74n1470_032:0310b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多生貪瞋邪見故成就意業障。",
        "from": "X74n1470_032:0310b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賊心求法障。",
        "from": "X74n1470_032:0310b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷絕菩薩境界障。",
        "from": "X74n1470_032:0310b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩勇猛法中心生退怯障。",
        "from": "X74n1470_032:0310b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩出離道中心生懶惰障。",
        "from": "X74n1470_032:0310b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩智慧光明門中心生止息障。",
        "from": "X74n1470_032:0310b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩念力中心生劣弱障。",
        "from": "X74n1470_032:0310b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來教法中不能住持障。",
        "from": "X74n1470_032:0310b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩離生道不能親近障。",
        "from": "X74n1470_032:0310b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩無失壞道不能修習障。",
        "from": "X74n1470_032:0310b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順二乘正位障。",
        "from": "X74n1470_032:0310b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離三世諸佛菩薩種性障。",
        "from": "X74n1470_032:0310b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是十地障。",
        "from": "X74n1470_032:0310b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今皆懺悔。",
        "from": "X74n1470_032:0310b24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "X74n1470_032:0310c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩於諸菩薩。",
        "from": "X74n1470_032:0310c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起一嗔心。",
        "from": "X74n1470_032:0310c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則成就如是等百萬障門。",
        "from": "X74n1470_032:0310c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X74n1470_032:0310c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子。",
        "from": "X74n1470_032:0310c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不見有一法為大過惡。",
        "from": "X74n1470_032:0310c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如諸菩薩於餘菩薩起瞋心者。",
        "from": "X74n1470_032:0310c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今皆懺悔。",
        "from": "X74n1470_032:0310c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等為無明所覆。",
        "from": "X74n1470_032:0310c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不識瞋恚罪因。",
        "from": "X74n1470_032:0310c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今遇道場。",
        "from": "X74n1470_032:0310c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方始覺知。",
        "from": "X74n1470_032:0310c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命毗盧遮那如來。",
        "from": "X74n1470_032:0310c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切賢聖海眾。",
        "from": "X74n1470_032:0310c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散華。",
        "from": "X74n1470_032:0310c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種惑障。",
        "from": "X74n1470_032:0310c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發露懺悔。",
        "from": "X74n1470_032:0310c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢覆藏。",
        "from": "X74n1470_032:0310c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此因緣。",
        "from": "X74n1470_032:0310c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及一切眾生海。",
        "from": "X74n1470_032:0310c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱。",
        "from": "X74n1470_032:0310c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願皆清淨。",
        "from": "X74n1470_032:0310c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次懺悔滅罪印呪",
        "from": "X74n1470_032:0310c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩[口*栗]末(二合)巴(引)巴眉悉普怛[口*捺]曷捺末日囉也莎曷(應誦三遍)　百劫積集罪　　一念盡盪除　　如火焚枯草　滅盡無有餘　我昔所造諸惡業　　皆由無始貪嗔癡　從身語意之所生　　一切我今皆懺悔懺悔已。",
        "from": "X74n1470_032:0310c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_032:0310c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○(白)眾等聽說經中無常偈",
        "from": "X74n1470_032:0310c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　晝夜暫時不可停　　此身壽命常減滅　更無餘人增壽命　　我今如何不歸死　若我病臥床褥時　　雖諸親族共圍繞　將捨壽時極眾苦　　惟我一人獨自受　爾時惟要其善法　　我今於彼未曾修　彼既無有救護者　　我當爾時柰之何",
        "from": "X74n1470_032:0310c17_0",
        "context_with_next_sentence": false
    }
]