[
    {
        "source_sentence": "居士傳三十",
        "from": "X88n1646_030:0237a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗汝霖張德遠傳",
        "from": "X88n1646_030:0237a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗汝霖名澤。",
        "from": "X88n1646_030:0237a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婺州義烏人也。",
        "from": "X88n1646_030:0237a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母夢大雷電有光下燭。",
        "from": "X88n1646_030:0237a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寤而生汝霖。",
        "from": "X88n1646_030:0237a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元祐六年登進士第。",
        "from": "X88n1646_030:0237a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷官州縣。",
        "from": "X88n1646_030:0237a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人磊磊有節概忠勇。",
        "from": "X88n1646_030:0237a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出於至誠深信一乘。",
        "from": "X88n1646_030:0237a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂宣說正法。",
        "from": "X88n1646_030:0237a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣和六年義烏滿心寺鑄大鐘成。",
        "from": "X88n1646_030:0237a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為之記曰。",
        "from": "X88n1646_030:0237a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來以大悲心。",
        "from": "X88n1646_030:0237a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令眾生於十二時中因耳所聞生利益見。",
        "from": "X88n1646_030:0237a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為欲所沉迷。",
        "from": "X88n1646_030:0237a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為邪所障蔽。",
        "from": "X88n1646_030:0237a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除惡念。",
        "from": "X88n1646_030:0237a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滋種善根。",
        "from": "X88n1646_030:0237a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是建置洪鐘。",
        "from": "X88n1646_030:0237a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以時撞擊。",
        "from": "X88n1646_030:0237a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾有識無識虗懷聽受。",
        "from": "X88n1646_030:0237a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所聞聲因緣入道。",
        "from": "X88n1646_030:0237a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如雷霆蟄驚。",
        "from": "X88n1646_030:0237a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牙甲昆蟲悉皆感悟。",
        "from": "X88n1646_030:0237a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "X88n1646_030:0237a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日將旦。",
        "from": "X88n1646_030:0237a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羣動咸作奔趨爭逐。",
        "from": "X88n1646_030:0237a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擾擾競前。",
        "from": "X88n1646_030:0237a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是警之。",
        "from": "X88n1646_030:0237a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣令眾生起戒懼心。",
        "from": "X88n1646_030:0237a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暨至食時。",
        "from": "X88n1646_030:0237a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢火煎迫。",
        "from": "X88n1646_030:0237a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噉涎貪噬腥羶無厭。",
        "from": "X88n1646_030:0237a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是警之。",
        "from": "X88n1646_030:0237a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣令眾生起齊潔心。",
        "from": "X88n1646_030:0237a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日之方中。",
        "from": "X88n1646_030:0237a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交易為市。",
        "from": "X88n1646_030:0237a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矜智嚇愚籠絡利己。",
        "from": "X88n1646_030:0237a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是警之。",
        "from": "X88n1646_030:0237a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣令眾生起方便心。",
        "from": "X88n1646_030:0237a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昧谷斂昏。",
        "from": "X88n1646_030:0237a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰邪氣盛。",
        "from": "X88n1646_030:0237a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念差誤。",
        "from": "X88n1646_030:0237a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為盜為淫。",
        "from": "X88n1646_030:0237a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是警之。",
        "from": "X88n1646_030:0237a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣令眾生起畏懼心。",
        "from": "X88n1646_030:0237a21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至夜未央。",
        "from": "X88n1646_030:0237a21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神識俱晦。",
        "from": "X88n1646_030:0237a21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢想顛倒。",
        "from": "X88n1646_030:0237a22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫覺莫知。",
        "from": "X88n1646_030:0237a22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是警之。",
        "from": "X88n1646_030:0237a22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣令眾生起脩省心。",
        "from": "X88n1646_030:0237a22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人之云亡。",
        "from": "X88n1646_030:0237a23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氣魄隨去。",
        "from": "X88n1646_030:0237a23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倀倀冥行。",
        "from": "X88n1646_030:0237a23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫知所趨。",
        "from": "X88n1646_030:0237a23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是警之。",
        "from": "X88n1646_030:0237a23_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣令眾生起依歸心。",
        "from": "X88n1646_030:0237a24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等心。",
        "from": "X88n1646_030:0237a24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉由中起。",
        "from": "X88n1646_030:0237a24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念勿絕。",
        "from": "X88n1646_030:0237a24_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證無上道。",
        "from": "X88n1646_030:0237b01_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿心古剎也。",
        "from": "X88n1646_030:0237b01_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舊雖有鐘。",
        "from": "X88n1646_030:0237b01_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形度小瑣。",
        "from": "X88n1646_030:0237b01_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發響焦急。",
        "from": "X88n1646_030:0237b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無從容韻。",
        "from": "X88n1646_030:0237b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺僧有宗徧募檀越。",
        "from": "X88n1646_030:0237b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弋陽主簿葉天將捐財唱之。",
        "from": "X88n1646_030:0237b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和者沓至。",
        "from": "X88n1646_030:0237b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是大體鈞模。",
        "from": "X88n1646_030:0237b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "采鳧氏法。",
        "from": "X88n1646_030:0237b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "規天地以為爐。",
        "from": "X88n1646_030:0237b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翕陰陽以鼓氣。",
        "from": "X88n1646_030:0237b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回祿騰焰。",
        "from": "X88n1646_030:0237b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛廉助威。",
        "from": "X88n1646_030:0237b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神施鬼設。",
        "from": "X88n1646_030:0237b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一瀉而就。",
        "from": "X88n1646_030:0237b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徽以金索。",
        "from": "X88n1646_030:0237b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懸而擊之。",
        "from": "X88n1646_030:0237b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱隱闐闐。",
        "from": "X88n1646_030:0237b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿虗空界。",
        "from": "X88n1646_030:0237b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四生六道。",
        "from": "X88n1646_030:0237b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濡滯幽冥。",
        "from": "X88n1646_030:0237b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽此法聲。",
        "from": "X88n1646_030:0237b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆解脫。",
        "from": "X88n1646_030:0237b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茲勝事也。",
        "from": "X88n1646_030:0237b07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂為頌云。",
        "from": "X88n1646_030:0237b07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人得是身不自愛重。",
        "from": "X88n1646_030:0237b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪殘暴忍長惡弗悛。",
        "from": "X88n1646_030:0237b07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫劫輪廻歷盡苦報。",
        "from": "X88n1646_030:0237b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來悲憫以鐘代言。",
        "from": "X88n1646_030:0237b08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾眾生聞警覺省悟。",
        "from": "X88n1646_030:0237b09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨聲懺悔滋益善心。",
        "from": "X88n1646_030:0237b09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予適宰官代佛宣說。",
        "from": "X88n1646_030:0237b09_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願咸諦聽無量無邊。",
        "from": "X88n1646_030:0237b10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靖康初知磁州。",
        "from": "X88n1646_030:0237b10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康王再使金過磁。",
        "from": "X88n1646_030:0237b10_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝霖力止之。",
        "from": "X88n1646_030:0237b11_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金人破真定。",
        "from": "X88n1646_030:0237b11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔以汝霖為副元帥。",
        "from": "X88n1646_030:0237b11_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從康王起兵入援。",
        "from": "X88n1646_030:0237b12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與金人大小十數戰。",
        "from": "X88n1646_030:0237b12_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輙以少勝眾。",
        "from": "X88n1646_030:0237b12_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金人憚之。",
        "from": "X88n1646_030:0237b13_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼曰宗爺。",
        "from": "X88n1646_030:0237b13_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康王即位南京。",
        "from": "X88n1646_030:0237b13_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝霖入見。",
        "from": "X88n1646_030:0237b13_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上疏陳恢復大計。",
        "from": "X88n1646_030:0237b14_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其言洞達心法。",
        "from": "X88n1646_030:0237b14_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識治體。",
        "from": "X88n1646_030:0237b14_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一事云。",
        "from": "X88n1646_030:0237b14_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣聞情生於愛。",
        "from": "X88n1646_030:0237b15_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛生於見。",
        "from": "X88n1646_030:0237b15_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見生於目之所遇。",
        "from": "X88n1646_030:0237b15_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與左右之所接所遇。",
        "from": "X88n1646_030:0237b15_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所接果順於己則喜。",
        "from": "X88n1646_030:0237b16_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜則賞之。",
        "from": "X88n1646_030:0237b16_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賞之者非懋其功也。",
        "from": "X88n1646_030:0237b16_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賞其順己而已耳。",
        "from": "X88n1646_030:0237b17_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所遇所接果逆於己則怒。",
        "from": "X88n1646_030:0237b17_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怒則罰之。",
        "from": "X88n1646_030:0237b18_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罰之者非罰其罪也。",
        "from": "X88n1646_030:0237b18_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罰其逆己而已耳。",
        "from": "X88n1646_030:0237b18_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是則賞罰出於喜怒。",
        "from": "X88n1646_030:0237b19_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜怒出於逆順。",
        "from": "X88n1646_030:0237b19_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂之公而無私乎。",
        "from": "X88n1646_030:0237b19_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賞罰徇私。",
        "from": "X88n1646_030:0237b20_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其何以礪世磨鈍。",
        "from": "X88n1646_030:0237b20_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大有為於天下乎。",
        "from": "X88n1646_030:0237b20_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人無我故忘情。",
        "from": "X88n1646_030:0237b21_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忘情故忘逆順。",
        "from": "X88n1646_030:0237b21_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忘逆順故忘喜怒。",
        "from": "X88n1646_030:0237b21_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故賞一善而天下之為善者勸。",
        "from": "X88n1646_030:0237b22_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知其非私善也。",
        "from": "X88n1646_030:0237b22_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罰一惡而天下之為惡者沮。",
        "from": "X88n1646_030:0237b23_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦知其非私惡也。",
        "from": "X88n1646_030:0237b23_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一賞一罰。",
        "from": "X88n1646_030:0237b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸之至公。",
        "from": "X88n1646_030:0237b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我無容心焉。",
        "from": "X88n1646_030:0237b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人其不心悅而誠服者乎。",
        "from": "X88n1646_030:0237b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陛下所以號令天下。",
        "from": "X88n1646_030:0237c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使人知所趨知所避。",
        "from": "X88n1646_030:0237c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知所行知所止者。",
        "from": "X88n1646_030:0237c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賞罰而已。",
        "from": "X88n1646_030:0237c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔文王一怒而安天下之民。",
        "from": "X88n1646_030:0237c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武王亦一怒而安天下之民。",
        "from": "X88n1646_030:0237c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是怒也。",
        "from": "X88n1646_030:0237c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈發於目之所遇與左右之所接哉。",
        "from": "X88n1646_030:0237c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼仇方橫肆兇慕。",
        "from": "X88n1646_030:0237c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侵侮王室。",
        "from": "X88n1646_030:0237c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣願陛下如文王武王。",
        "from": "X88n1646_030:0237c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦一怒而安天下之民。",
        "from": "X88n1646_030:0237c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有賞有罰。",
        "from": "X88n1646_030:0237c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟平惟一。",
        "from": "X88n1646_030:0237c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於應酬萬幾。",
        "from": "X88n1646_030:0237c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進退取予之際。",
        "from": "X88n1646_030:0237c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷之至公。",
        "from": "X88n1646_030:0237c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以慰天下之望。",
        "from": "X88n1646_030:0237c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋以李伯紀薦知開封府兼留守事。",
        "from": "X88n1646_030:0237c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂修復京城。",
        "from": "X88n1646_030:0237c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "招降巨宼王善．楊進等百萬眾。",
        "from": "X88n1646_030:0237c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河北諸山寨皆受節制。",
        "from": "X88n1646_030:0237c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金人來攻輙敗去。",
        "from": "X88n1646_030:0237c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疏請回鑾凡二十四上。",
        "from": "X88n1646_030:0237c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高宗不從。",
        "from": "X88n1646_030:0237c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建炎二年汝霖糾合諸將尅日大舉。",
        "from": "X88n1646_030:0237c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會疽發於背。",
        "from": "X88n1646_030:0237c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸將入問疾。",
        "from": "X88n1646_030:0237c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語之曰。",
        "from": "X88n1646_030:0237c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾以二帝蒙塵。",
        "from": "X88n1646_030:0237c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積憤至此。",
        "from": "X88n1646_030:0237c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等能殲敵則我死無恨。",
        "from": "X88n1646_030:0237c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾皆流涕。",
        "from": "X88n1646_030:0237c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翼日風雨晝晦。",
        "from": "X88n1646_030:0237c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝霖連呼渡河者三。",
        "from": "X88n1646_030:0237c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂卒。",
        "from": "X88n1646_030:0237c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈觀文殿學士。",
        "from": "X88n1646_030:0237c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡忠簡。",
        "from": "X88n1646_030:0237c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝霖既卒。",
        "from": "X88n1646_030:0237c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數日間將士散去者十五六。",
        "from": "X88n1646_030:0237c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而盡散去而中原不守矣。",
        "from": "X88n1646_030:0237c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝霖甞作覧鏡偈曰。",
        "from": "X88n1646_030:0237c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覧鏡影還在。",
        "from": "X88n1646_030:0237c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掩鏡影還去。",
        "from": "X88n1646_030:0237c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試問鏡中人。",
        "from": "X88n1646_030:0237c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却歸什麼處。",
        "from": "X88n1646_030:0237c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作休牧軒頌曰。",
        "from": "X88n1646_030:0237c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空餘短笠與輕蓑。",
        "from": "X88n1646_030:0237c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道作休時事更多。",
        "from": "X88n1646_030:0237c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更向中間問消息。",
        "from": "X88n1646_030:0237c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜深無奈月明何。",
        "from": "X88n1646_030:0237c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同縣人陳允昌。",
        "from": "X88n1646_030:0237c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字得全。",
        "from": "X88n1646_030:0237c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝霖父執也。",
        "from": "X88n1646_030:0237c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦好佛法。",
        "from": "X88n1646_030:0237c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屏居小室。",
        "from": "X88n1646_030:0237c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宴坐湛然。",
        "from": "X88n1646_030:0237c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸染著。",
        "from": "X88n1646_030:0237c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年八十八將卒。",
        "from": "X88n1646_030:0237c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲沉水香湯三日恬然而逝。",
        "from": "X88n1646_030:0237c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝霖志其事而銘之曰。",
        "from": "X88n1646_030:0237c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公坐一室。",
        "from": "X88n1646_030:0237c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心自內觀。",
        "from": "X88n1646_030:0237c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知六塵。",
        "from": "X88n1646_030:0237c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是幻妄。",
        "from": "X88n1646_030:0237c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故於財色。",
        "from": "X88n1646_030:0237c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡欲遠離。",
        "from": "X88n1646_030:0237c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方寸泊然。",
        "from": "X88n1646_030:0237c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨圓滿。",
        "from": "X88n1646_030:0237c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公無所住。",
        "from": "X88n1646_030:0237c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子復何言(宋史．宗忠簡集)。",
        "from": "X88n1646_030:0237c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張德遠名浚。",
        "from": "X88n1646_030:0237c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漢州綿竹人也。",
        "from": "X88n1646_030:0237c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政和八年登進士第。",
        "from": "X88n1646_030:0237c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高孝兩朝再登政府。",
        "from": "X88n1646_030:0237c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "封魏國公。",
        "from": "X88n1646_030:0238a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以恢復為己任。",
        "from": "X88n1646_030:0238a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遭讒被斥。",
        "from": "X88n1646_030:0238a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志不少挫。",
        "from": "X88n1646_030:0238a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士大夫視其進退以為憂喜。",
        "from": "X88n1646_030:0238a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其用兵雖屢衂。",
        "from": "X88n1646_030:0238a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人咸諒其忠不以為罪也。",
        "from": "X88n1646_030:0238a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初居京師。",
        "from": "X88n1646_030:0238a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇處士譙定。",
        "from": "X88n1646_030:0238a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教以熟讀論語。",
        "from": "X88n1646_030:0238a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始有志於道。",
        "from": "X88n1646_030:0238a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而問法於圓悟禪師。",
        "from": "X88n1646_030:0238a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X88n1646_030:0238a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巖頭云。",
        "from": "X88n1646_030:0238a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却物為上。",
        "from": "X88n1646_030:0238a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐物為下。",
        "from": "X88n1646_030:0238a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能於物上轉得疾。",
        "from": "X88n1646_030:0238a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切立在下風。",
        "from": "X88n1646_030:0238a06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德遠有省。",
        "from": "X88n1646_030:0238a06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呈偈曰。",
        "from": "X88n1646_030:0238a06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教外單傳佛祖機。",
        "from": "X88n1646_030:0238a06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來無悟亦無迷。",
        "from": "X88n1646_030:0238a07_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮雲散盡青天在。",
        "from": "X88n1646_030:0238a07_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日出東方夜落西。",
        "from": "X88n1646_030:0238a07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師囑之曰。",
        "from": "X88n1646_030:0238a08_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公他日無忘護教。",
        "from": "X88n1646_030:0238a08_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞作虎邱轉輪大藏記曰。",
        "from": "X88n1646_030:0238a08_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎邱號吳郡勝處。",
        "from": "X88n1646_030:0238a09_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉王珣與弟珉宅石澗之東西。",
        "from": "X88n1646_030:0238a09_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而捨為佛剎。",
        "from": "X88n1646_030:0238a10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本朝至道中革律為禪。",
        "from": "X88n1646_030:0238a10_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹與八年予謫居零陵。",
        "from": "X88n1646_030:0238a10_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住持宗達以書抵予曰。",
        "from": "X88n1646_030:0238a11_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與紹隆同嗣法於圓悟禪師。",
        "from": "X88n1646_030:0238a11_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隆甞建立轉輪大藏。",
        "from": "X88n1646_030:0238a12_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "效彌勒示現體製。",
        "from": "X88n1646_030:0238a12_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施軸於中。",
        "from": "X88n1646_030:0238a13_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "負戴其上。",
        "from": "X88n1646_030:0238a13_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "規模甚偉。",
        "from": "X88n1646_030:0238a13_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方議卜築。",
        "from": "X88n1646_030:0238a13_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隆適告寂。",
        "from": "X88n1646_030:0238a13_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我夙夜究力。",
        "from": "X88n1646_030:0238a14_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益勵精誠。",
        "from": "X88n1646_030:0238a14_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再閱寒暑。",
        "from": "X88n1646_030:0238a14_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功績甫就。",
        "from": "X88n1646_030:0238a14_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平高益下。",
        "from": "X88n1646_030:0238a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棟宇翼然。",
        "from": "X88n1646_030:0238a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琅函貝葉。",
        "from": "X88n1646_030:0238a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輝燦焜燿。",
        "from": "X88n1646_030:0238a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信士鄒珉目規口歎。",
        "from": "X88n1646_030:0238a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡損所有獨力莊嚴。",
        "from": "X88n1646_030:0238a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我法中為大緣事。",
        "from": "X88n1646_030:0238a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢以請記。",
        "from": "X88n1646_030:0238a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫世變之興。",
        "from": "X88n1646_030:0238a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其來有自。",
        "from": "X88n1646_030:0238a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因欲生愛。",
        "from": "X88n1646_030:0238a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因愛生貪。",
        "from": "X88n1646_030:0238a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因貪生忿。",
        "from": "X88n1646_030:0238a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲愛貪忿是謂無明。",
        "from": "X88n1646_030:0238a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉交攻激為鬬亂。",
        "from": "X88n1646_030:0238a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨深禍結殆不偶然。",
        "from": "X88n1646_030:0238a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛以清淨立教。",
        "from": "X88n1646_030:0238a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使人回心歸善。",
        "from": "X88n1646_030:0238a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念倘正。",
        "from": "X88n1646_030:0238a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和氣自生。",
        "from": "X88n1646_030:0238a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其於教化似非小補。",
        "from": "X88n1646_030:0238a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以有請而無媿。",
        "from": "X88n1646_030:0238a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余聞佛為一大事因緣故出現於世。",
        "from": "X88n1646_030:0238a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種警喻發明空理。",
        "from": "X88n1646_030:0238a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丁寧反覆務息塵勞。",
        "from": "X88n1646_030:0238a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現大光明。",
        "from": "X88n1646_030:0238a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饒益照耀。",
        "from": "X88n1646_030:0238a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙用神通不可思議。",
        "from": "X88n1646_030:0238a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將見斯藏之成。",
        "from": "X88n1646_030:0238a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩相增信。",
        "from": "X88n1646_030:0238a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由信趨善。",
        "from": "X88n1646_030:0238a24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿習退轉。",
        "from": "X88n1646_030:0238a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直證圓通。",
        "from": "X88n1646_030:0238a24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝弟和睦之心油然而起。",
        "from": "X88n1646_030:0238a24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜勤守護。",
        "from": "X88n1646_030:0238b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用永其傳。",
        "from": "X88n1646_030:0238b01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧禪師居泉州。",
        "from": "X88n1646_030:0238b01_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應德遠請入徑山。",
        "from": "X88n1646_030:0238b01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞遣其徒謙候德遠於長沙。",
        "from": "X88n1646_030:0238b02_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德遠母秦國夫人。",
        "from": "X88n1646_030:0238b02_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故奉佛。",
        "from": "X88n1646_030:0238b03_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日常誦經禮拜。",
        "from": "X88n1646_030:0238b03_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及謙至。",
        "from": "X88n1646_030:0238b03_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因問徑山何以教人。",
        "from": "X88n1646_030:0238b03_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謙言祇教人看狗子無佛性及竹篦子話。",
        "from": "X88n1646_030:0238b04_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫人退而習坐。",
        "from": "X88n1646_030:0238b04_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力究前話。",
        "from": "X88n1646_030:0238b05_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕忽有省。",
        "from": "X88n1646_030:0238b05_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回看經文無滯。",
        "from": "X88n1646_030:0238b05_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂作偈寄呈大慧曰。",
        "from": "X88n1646_030:0238b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐日看經文。",
        "from": "X88n1646_030:0238b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如逢舊識人。",
        "from": "X88n1646_030:0238b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫言頻有礙。",
        "from": "X88n1646_030:0238b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一舉一回新。",
        "from": "X88n1646_030:0238b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及卒。",
        "from": "X88n1646_030:0238b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺命供大慧一年以報激揚之恩。",
        "from": "X88n1646_030:0238b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德遠從之。",
        "from": "X88n1646_030:0238b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚歲除醴泉觀使。",
        "from": "X88n1646_030:0238b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寓餘干。",
        "from": "X88n1646_030:0238b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日讀易不輟。",
        "from": "X88n1646_030:0238b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書座右曰。",
        "from": "X88n1646_030:0238b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎言語。",
        "from": "X88n1646_030:0238b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "節飲食。",
        "from": "X88n1646_030:0238b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致命遂志。",
        "from": "X88n1646_030:0238b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反身修德。",
        "from": "X88n1646_030:0238b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋得疾卒。",
        "from": "X88n1646_030:0238b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈太師。",
        "from": "X88n1646_030:0238b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡忠獻(朱子文集．虎邱志．五燈會元)。",
        "from": "X88n1646_030:0238b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_030:0238b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予讀宗公上高宗諸疏。",
        "from": "X88n1646_030:0238b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本末貫徹。",
        "from": "X88n1646_030:0238b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓然命世才也。",
        "from": "X88n1646_030:0238b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其於佛法的的見大意。",
        "from": "X88n1646_030:0238b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故其轉物之智不窮。",
        "from": "X88n1646_030:0238b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張公忠孝大節不後宗公。",
        "from": "X88n1646_030:0238b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而機用則稍踈矣。",
        "from": "X88n1646_030:0238b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其護法之誠不可沒也。",
        "from": "X88n1646_030:0238b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因合而論之。",
        "from": "X88n1646_030:0238b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_030:0238b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家乃大丈夫之事。",
        "from": "X88n1646_030:0238b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非將相所能為。",
        "from": "X88n1646_030:0238b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若宗忠簡公斯大丈夫矣。",
        "from": "X88n1646_030:0238b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將相云乎哉。",
        "from": "X88n1646_030:0238b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魏公盖其同",
        "from": "X88n1646_030:0238b16_5",
        "context_with_next_sentence": false
    }
]