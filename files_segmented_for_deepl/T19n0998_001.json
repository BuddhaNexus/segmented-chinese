[
    {
        "source_sentence": "佛說迴向輪經一卷",
        "from": "T19n0998_001:0577a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于闐三藏尸羅達摩於北庭龍興寺譯",
        "from": "T19n0998_001:0577a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T19n0998_001:0577a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在大摩尼金剛寶山峯中。",
        "from": "T19n0998_001:0577a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩眾俱。",
        "from": "T19n0998_001:0577a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告金剛摩尼菩薩言。",
        "from": "T19n0998_001:0577a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子若有菩薩求大菩提。",
        "from": "T19n0998_001:0577a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲救度一切有情。",
        "from": "T19n0998_001:0577a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已受菩薩律儀戒。",
        "from": "T19n0998_001:0577a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學已曾發起大菩提心。",
        "from": "T19n0998_001:0577a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大悲愍。",
        "from": "T19n0998_001:0577a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常欲奉事一切如來。",
        "from": "T19n0998_001:0577a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲廣積集諸大菩薩福德資糧。",
        "from": "T19n0998_001:0577a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲證佛智。",
        "from": "T19n0998_001:0577a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以無礙等持總持諸解脫門神通遊戲。",
        "from": "T19n0998_001:0577a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令虛空成大庫藏。",
        "from": "T19n0998_001:0577a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令自手似如意寶作是奉施。",
        "from": "T19n0998_001:0577b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願一切諸佛世尊。",
        "from": "T19n0998_001:0577b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已住十地諸大菩薩。",
        "from": "T19n0998_001:0577b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持金剛者。",
        "from": "T19n0998_001:0577b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當憶念我。",
        "from": "T19n0998_001:0577b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲已發菩提心未安住正道。",
        "from": "T19n0998_001:0577b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今持身心。",
        "from": "T19n0998_001:0577b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切時。",
        "from": "T19n0998_001:0577b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切種奉施三世諸佛菩薩。",
        "from": "T19n0998_001:0577b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願大自在諸佛如來。",
        "from": "T19n0998_001:0577b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已證大地一切菩薩。",
        "from": "T19n0998_001:0577b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當攝受我。",
        "from": "T19n0998_001:0577b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我大福德智慧資糧。",
        "from": "T19n0998_001:0577b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛利精進廣大心量。",
        "from": "T19n0998_001:0577b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜調伏神通自在。",
        "from": "T19n0998_001:0577b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波羅蜜多速得圓滿。",
        "from": "T19n0998_001:0577b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是言。",
        "from": "T19n0998_001:0577b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯大悲者當憶念我。",
        "from": "T19n0998_001:0577b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲墮在生死繫以大縛。",
        "from": "T19n0998_001:0577b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉居牢獄離正道法。",
        "from": "T19n0998_001:0577b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逼以彊力煩惱怨敵。",
        "from": "T19n0998_001:0577b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無怙無救無目無依。",
        "from": "T19n0998_001:0577b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無將無導遊行僻路。",
        "from": "T19n0998_001:0577b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣向生死背大涅槃。",
        "from": "T19n0998_001:0577b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順諸惡趣將墮險路。",
        "from": "T19n0998_001:0577b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨仆惡道常遇惡友。",
        "from": "T19n0998_001:0577b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離善知識迷於邪正。",
        "from": "T19n0998_001:0577b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有利無利有義無義。",
        "from": "T19n0998_001:0577b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離諸善成就不善。",
        "from": "T19n0998_001:0577b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常背賢聖諸佛菩薩。",
        "from": "T19n0998_001:0577b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生老病死憂惱所迫。",
        "from": "T19n0998_001:0577b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得安隱無怖無畏。",
        "from": "T19n0998_001:0577b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心常散亂闕修寂靜調伏施戒及不放逸。",
        "from": "T19n0998_001:0577b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離等持總持二門十地法忍。",
        "from": "T19n0998_001:0577b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能安住甚深般若波羅蜜多及平等性。",
        "from": "T19n0998_001:0577b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不修無量慈悲喜捨。",
        "from": "T19n0998_001:0577b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不具菩薩三聚戒蘊。",
        "from": "T19n0998_001:0577b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離無障無礙大智。",
        "from": "T19n0998_001:0577b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能安住於寂滅因善成立法。",
        "from": "T19n0998_001:0577b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離神通力無所畏。",
        "from": "T19n0998_001:0577b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住正念不能成就隨行趣入無忘失法。",
        "from": "T19n0998_001:0577b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匱諸功德。",
        "from": "T19n0998_001:0577b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見取疑惑障於通達七等覺支。",
        "from": "T19n0998_001:0577b22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闕修如實八聖道支。",
        "from": "T19n0998_001:0577b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量百千苦惱所逼。",
        "from": "T19n0998_001:0577b24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而常熾然眾苦逼迫。",
        "from": "T19n0998_001:0577b24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心常下劣忿恨散亂。",
        "from": "T19n0998_001:0577b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常順煩惱。",
        "from": "T19n0998_001:0577b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願一切諸佛菩薩。",
        "from": "T19n0998_001:0577b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依大悲愍為我救護。",
        "from": "T19n0998_001:0577b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我歸依為我導師。",
        "from": "T19n0998_001:0577b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願令我速得圓滿大正覺路。",
        "from": "T19n0998_001:0577b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大菩提道菩提資糧。",
        "from": "T19n0998_001:0577b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又願令我速得圓滿如來十力四無所畏。",
        "from": "T19n0998_001:0577b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八不共諸如來法。",
        "from": "T19n0998_001:0577b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無礙辯才等持解脫陀羅尼門。",
        "from": "T19n0998_001:0577b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德神通波羅蜜多。",
        "from": "T19n0998_001:0577c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又願與我一切成就一切功德。",
        "from": "T19n0998_001:0577c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次為轉廣大供養應作是言。",
        "from": "T19n0998_001:0577c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又願一切諸佛世尊。",
        "from": "T19n0998_001:0577c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得大勢諸菩薩眾。",
        "from": "T19n0998_001:0577c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當憶念我。",
        "from": "T19n0998_001:0577c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲。",
        "from": "T19n0998_001:0577c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於一切佛菩薩所轉大恭敬。",
        "from": "T19n0998_001:0577c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承事供養以身奉獻。",
        "from": "T19n0998_001:0577c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有十方諸世界中大莊嚴具。",
        "from": "T19n0998_001:0577c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂種種寶宮。",
        "from": "T19n0998_001:0577c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸寶莊嚴寶樹寶山。",
        "from": "T19n0998_001:0577c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶座寶壇珍寶行列。",
        "from": "T19n0998_001:0577c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶蓋寶幢寶飾瓔珞。",
        "from": "T19n0998_001:0577c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真珠羅網寶器寶聚積寶光焰。",
        "from": "T19n0998_001:0577c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸寶洲中大末尼寶。",
        "from": "T19n0998_001:0577c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨燈樹寶鈴和鳴。",
        "from": "T19n0998_001:0577c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末尼光曜真金纓拂。",
        "from": "T19n0998_001:0577c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂覆連接妙金蓮花。",
        "from": "T19n0998_001:0577c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻浮檀金以為其鬚。",
        "from": "T19n0998_001:0577c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金樹行列種種寶宮。",
        "from": "T19n0998_001:0577c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶雲靉靆雨眾寶渧。",
        "from": "T19n0998_001:0577c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸寶藏殿眾妙末尼。",
        "from": "T19n0998_001:0577c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閒錯墻壁寶珠欄楯。",
        "from": "T19n0998_001:0577c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大持明者可樂圓苑。",
        "from": "T19n0998_001:0577c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屋宅寶宮殿堂樹林皆可愛樂。",
        "from": "T19n0998_001:0577c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如是等無攝無受。",
        "from": "T19n0998_001:0577c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向一切諸佛菩薩。",
        "from": "T19n0998_001:0577c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於贍部洲所有妙藥長壽藥類。",
        "from": "T19n0998_001:0577c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸末尼寶能與有情所求眾藥。",
        "from": "T19n0998_001:0577c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然成美殊勝飲食。",
        "from": "T19n0998_001:0577c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸香樹種種異類。",
        "from": "T19n0998_001:0577c17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旃檀妙樹阿伽盧樹。",
        "from": "T19n0998_001:0577c18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈水赤檀大葉恒花。",
        "from": "T19n0998_001:0577c18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能醉香等諸樹種類。",
        "from": "T19n0998_001:0577c19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可樂妙香無攝無受諸如意樹。",
        "from": "T19n0998_001:0577c19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大海中種種異類。",
        "from": "T19n0998_001:0577c20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸末尼寶如意寶珠。",
        "from": "T19n0998_001:0577c20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及須彌山鷄娑囉山。",
        "from": "T19n0998_001:0577c21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香山摩尼耶山。",
        "from": "T19n0998_001:0577c21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尹地(二合)耶大山。",
        "from": "T19n0998_001:0577c22_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼陀羅山金剛山等。",
        "from": "T19n0998_001:0577c22_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大山中種種寶峯。",
        "from": "T19n0998_001:0577c22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶臺寶石寶窟寶宮。",
        "from": "T19n0998_001:0577c23_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶飾寶片眾寶階道。",
        "from": "T19n0998_001:0577c23_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸末尼柱諸寶燈輪。",
        "from": "T19n0998_001:0577c24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸瑠璃等末尼種類。",
        "from": "T19n0998_001:0577c24_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有天上無主天宮。",
        "from": "T19n0998_001:0577c25_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天諸名花悅意樂見。",
        "from": "T19n0998_001:0577c25_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天諸樂具微風吹動。",
        "from": "T19n0998_001:0577c26_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空宮行伍和鳴美聲。",
        "from": "T19n0998_001:0577c26_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天諸音樂不鼓自然出美妙聲。",
        "from": "T19n0998_001:0577c27_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天諸眾鳥住空宮中。",
        "from": "T19n0998_001:0577c27_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳴妙音聲并諸寶雲出大美聲。",
        "from": "T19n0998_001:0577c28_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天諸末尼歌詠音樂。",
        "from": "T19n0998_001:0577c29_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸妙香花樹鬘樹塗香燒香樹。",
        "from": "T19n0998_001:0577c29_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈樹幢樹幡樹寶樹。",
        "from": "T19n0998_001:0578a01_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等一切無所攝受。",
        "from": "T19n0998_001:0578a01_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉施一切諸佛菩薩。",
        "from": "T19n0998_001:0578a02_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切佛眼所覩。",
        "from": "T19n0998_001:0578a02_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛剎中大供養雲。",
        "from": "T19n0998_001:0578a03_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花雲香雲鬘雲燒香雲。",
        "from": "T19n0998_001:0578a03_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香雲寶蓋雲寶幢雲寶幡雲。",
        "from": "T19n0998_001:0578a04_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶衣雲寶聚雲寶器雲大末尼聚雲。",
        "from": "T19n0998_001:0578a04_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種微妙大寶珠雲。",
        "from": "T19n0998_001:0578a05_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以香油滿大燈器。",
        "from": "T19n0998_001:0578a06_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量等千界燃以燈炷。",
        "from": "T19n0998_001:0578a06_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量百須彌。",
        "from": "T19n0998_001:0578a07_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉施一切諸佛世尊諸大菩薩。",
        "from": "T19n0998_001:0578a07_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是供養所生勝福。",
        "from": "T19n0998_001:0578a08_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並將迴向無上菩提。",
        "from": "T19n0998_001:0578a08_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如過去佛所修諸善。",
        "from": "T19n0998_001:0578a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無所得而為方便。",
        "from": "T19n0998_001:0578a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向菩提。",
        "from": "T19n0998_001:0578a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦如是持此功德。",
        "from": "T19n0998_001:0578a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向無上正等菩提。",
        "from": "T19n0998_001:0578a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請諸佛。",
        "from": "T19n0998_001:0578a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願往赴菩提道場。",
        "from": "T19n0998_001:0578a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏魔怨證大菩提轉大法輪。",
        "from": "T19n0998_001:0578a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲滅度者為諸有情。",
        "from": "T19n0998_001:0578a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請願住滿一大劫。",
        "from": "T19n0998_001:0578a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜一切諸佛菩薩一切有情所修諸福。",
        "from": "T19n0998_001:0578a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發露懺悔一切諸罪。",
        "from": "T19n0998_001:0578a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如三世諸佛菩薩懺悔罪障。",
        "from": "T19n0998_001:0578a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦如是願罪銷滅。",
        "from": "T19n0998_001:0578a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉施乃至懺悔已畢。",
        "from": "T19n0998_001:0578a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以淨心憶念一切諸佛菩薩。",
        "from": "T19n0998_001:0578a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對佛像前誦此密言滿足八遍密言曰。",
        "from": "T19n0998_001:0578a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵娑頗(二合)羅裟頗(二合)羅微摩那娑(去引)囉摩訶(引)若縛吽誦密言已。",
        "from": "T19n0998_001:0578a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便隨欲。",
        "from": "T19n0998_001:0578a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就天妙大供養雲。",
        "from": "T19n0998_001:0578a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛所而得現前。",
        "from": "T19n0998_001:0578a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子或善女人。",
        "from": "T19n0998_001:0578a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫念於佛或晝或夜。",
        "from": "T19n0998_001:0578a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉誦如是大迴向輪。",
        "from": "T19n0998_001:0578a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此善男子或善女人。",
        "from": "T19n0998_001:0578a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸罪銷滅一切煩惱漸得微薄。",
        "from": "T19n0998_001:0578a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能獲如前所說功德。",
        "from": "T19n0998_001:0578a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若轉一遍得百梵福。",
        "from": "T19n0998_001:0578a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢常見佛。",
        "from": "T19n0998_001:0578a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後得生淨土。",
        "from": "T19n0998_001:0578a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已諸菩薩眾歡喜奉行。",
        "from": "T19n0998_001:0578a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說迴向輪經",
        "from": "T19n0998_001:0578a28_0",
        "context_with_next_sentence": false
    }
]