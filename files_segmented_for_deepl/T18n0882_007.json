        "from": "T18n0882_007:0365a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劍心。",
        "from": "T18n0882_007:0365a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開敷。",
        "from": "T18n0882_007:0365a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從口散頂。",
        "from": "T18n0882_007:0365a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胸處。",
        "from": "T18n0882_007:0365a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面處。",
        "from": "T18n0882_007:0365a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大指處。",
        "from": "T18n0882_007:0365a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心前等。",
        "from": "T18n0882_007:0365a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次教授最上法印次第。",
