[
    {
        "source_sentence": "謹錄邃和尚止觀記中異義",
        "from": "X55n0918_001:0740b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台弟子　乾淑　集",
        "from": "X55n0918_001:0740b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序中云。",
        "from": "X55n0918_001:0740b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏總中三者。",
        "from": "X55n0918_001:0740b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記家意易知。",
        "from": "X55n0918_001:0740b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚云。",
        "from": "X55n0918_001:0740b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將三界為三。",
        "from": "X55n0918_001:0740b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即所止。",
        "from": "X55n0918_001:0740b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏為。",
        "from": "X55n0918_001:0740b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一即能止。",
        "from": "X55n0918_001:0740b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從前次修無漏。",
        "from": "X55n0918_001:0740b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止三界獄中來。",
        "from": "X55n0918_001:0740b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故用三界為三。",
        "from": "X55n0918_001:0740b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏為一。",
        "from": "X55n0918_001:0740b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為四也。",
        "from": "X55n0918_001:0740b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次云。",
        "from": "X55n0918_001:0740b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一經一說如此者。",
        "from": "X55n0918_001:0740b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記指前常啼等是。",
        "from": "X55n0918_001:0740b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意。",
        "from": "X55n0918_001:0740b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常啼等但是成華嚴之一意。",
        "from": "X55n0918_001:0740b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言一說如此。",
        "from": "X55n0918_001:0740b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言餘經亦然者。",
        "from": "X55n0918_001:0740b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云。",
        "from": "X55n0918_001:0740b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸經未引者尚多。",
        "from": "X55n0918_001:0740b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意不爾。",
        "from": "X55n0918_001:0740b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但指下所引諸經是也。",
        "from": "X55n0918_001:0740b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑者云者。",
        "from": "X55n0918_001:0740b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶聞上餘經。",
        "from": "X55n0918_001:0740b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦然語。",
        "from": "X55n0918_001:0740b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故請引云。",
        "from": "X55n0918_001:0740b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願聞誠證也。",
        "from": "X55n0918_001:0740b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次簡非中。",
        "from": "X55n0918_001:0740b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云。",
        "from": "X55n0918_001:0740b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先心次道。",
        "from": "X55n0918_001:0740b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意云。",
        "from": "X55n0918_001:0740b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是雙標心道章門。",
        "from": "X55n0918_001:0740b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以得知。",
        "from": "X55n0918_001:0740b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據後釋十心中。",
        "from": "X55n0918_001:0740b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆云發心行道。",
        "from": "X55n0918_001:0740b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此驗之。",
        "from": "X55n0918_001:0740b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知無別也。",
        "from": "X55n0918_001:0740b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次或先起是心後起非心者。",
        "from": "X55n0918_001:0740b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云。",
        "from": "X55n0918_001:0740b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即菩提。",
        "from": "X55n0918_001:0740b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非即十非。",
        "from": "X55n0918_001:0740b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意云。",
        "from": "X55n0918_001:0740b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即二乘。",
        "from": "X55n0918_001:0740b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非即九非也。",
        "from": "X55n0918_001:0740b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以知之。",
        "from": "X55n0918_001:0740b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據後云是非並簡。",
        "from": "X55n0918_001:0740b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驗知也。",
        "from": "X55n0918_001:0740b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次[口*(千/山)]中兩番者。",
        "from": "X55n0918_001:0740b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記意。",
        "from": "X55n0918_001:0740b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前番約是非相對。",
        "from": "X55n0918_001:0740b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即菩提。",
        "from": "X55n0918_001:0740b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非即十非。",
        "from": "X55n0918_001:0740b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後番約內外。",
        "from": "X55n0918_001:0740c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂二乘外謂九。",
        "from": "X55n0918_001:0740c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非為二邊。",
        "from": "X55n0918_001:0740c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖一往分折。",
        "from": "X55n0918_001:0740c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶恐前單約內心。",
        "from": "X55n0918_001:0740c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後約心境也。",
        "from": "X55n0918_001:0740c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意云。",
        "from": "X55n0918_001:0740c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前一但就十為內外並等。",
        "from": "X55n0918_001:0740c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後番[揉-矛+ㄆ]用。",
        "from": "X55n0918_001:0740c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後是心對十非簡是。",
        "from": "X55n0918_001:0740c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂菩提非。",
        "from": "X55n0918_001:0740c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結二十五法中立名者。",
        "from": "X55n0918_001:0740c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記將令且下結。",
        "from": "X55n0918_001:0740c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意亦將不無觀下結。",
        "from": "X55n0918_001:0740c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據引經意。",
        "from": "X55n0918_001:0740c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但至則及內外觀經。",
        "from": "X55n0918_001:0740c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又則盡故知。",
        "from": "X55n0918_001:0740c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將此亦不無觀為立名。",
        "from": "X55n0918_001:0740c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由合為一段也。",
        "from": "X55n0918_001:0740c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生起十章末。",
        "from": "X55n0918_001:0740c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結云。",
        "from": "X55n0918_001:0740c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終至聖人方便。",
        "from": "X55n0918_001:0740c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記獨將二乘菩薩三境對圓方便方。",
        "from": "X55n0918_001:0740c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意但是當教方便。",
        "from": "X55n0918_001:0740c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是當未證前。",
        "from": "X55n0918_001:0740c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又約發時未論入位。",
        "from": "X55n0918_001:0740c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故通名方便。",
        "from": "X55n0918_001:0740c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓教通用十境為方便。",
        "from": "X55n0918_001:0740c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不局二乘菩薩為方便也。",
        "from": "X55n0918_001:0740c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言方便者。",
        "from": "X55n0918_001:0740c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是二乘菩薩未證真前為方便。",
        "from": "X55n0918_001:0740c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證真了。",
        "from": "X55n0918_001:0740c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不名方便亦不論發。",
        "from": "X55n0918_001:0740c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又私料簡中云。",
        "from": "X55n0918_001:0740c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏陰轉成法性陰者。",
        "from": "X55n0918_001:0740c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云。",
        "from": "X55n0918_001:0740c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅後界外受法性身。",
        "from": "X55n0918_001:0740c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼為法性陰。",
        "from": "X55n0918_001:0740c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意。",
        "from": "X55n0918_001:0740c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但即身得便是法性。",
        "from": "X55n0918_001:0740c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不待滅後也。",
        "from": "X55n0918_001:0740c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "X55n0918_001:0740c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常見之人異念斷者。",
        "from": "X55n0918_001:0740c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記將內外凡為異念。",
        "from": "X55n0918_001:0740c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經自釋異念者八也。",
        "from": "X55n0918_001:0740c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍人也。",
        "from": "X55n0918_001:0740c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人即忍也。",
        "from": "X55n0918_001:0740c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即因也。",
        "from": "X55n0918_001:0740c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又次言先尼小信尚不可得者記云小乘信師意云但是少信心也。",
        "from": "X55n0918_001:0740c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又矢石者。",
        "from": "X55n0918_001:0740c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云可知。",
        "from": "X55n0918_001:0740c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有言兩人共戰他。",
        "from": "X55n0918_001:0740c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一用石。",
        "from": "X55n0918_001:0740c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一用矢。",
        "from": "X55n0918_001:0740c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戰勝時各言有功。",
        "from": "X55n0918_001:0740c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故二人諍其矢石有功。",
        "from": "X55n0918_001:0740c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有言。",
        "from": "X55n0918_001:0740c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六因時。",
        "from": "X55n0918_001:0740c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鶽銜矢長一尺八寸墮魏王殿。",
        "from": "X55n0918_001:0740c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王命前朝臣共議。",
        "from": "X55n0918_001:0740c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有言矢者。",
        "from": "X55n0918_001:0740c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有言石者。",
        "from": "X55n0918_001:0740c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言名與矢石也。",
        "from": "X55n0918_001:0740c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有智人後來。",
        "from": "X55n0918_001:0740c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言。",
        "from": "X55n0918_001:0741a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須此諍。",
        "from": "X55n0918_001:0741a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此從衛國來。",
        "from": "X55n0918_001:0741a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衛人長大。",
        "from": "X55n0918_001:0741a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以用石為矢也。",
        "from": "X55n0918_001:0741a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今不用此意。",
        "from": "X55n0918_001:0741a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但取前諍意也。",
        "from": "X55n0918_001:0741a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又安心中法行安心中言。",
        "from": "X55n0918_001:0741a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀法相。",
        "from": "X55n0918_001:0741a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀睡不除。",
        "from": "X55n0918_001:0741a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為說止。",
        "from": "X55n0918_001:0741a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大功能。",
        "from": "X55n0918_001:0741a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記不別釋。",
        "from": "X55n0918_001:0741a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "X55n0918_001:0741a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五停心觀。",
        "from": "X55n0918_001:0741a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止是譬定。",
        "from": "X55n0918_001:0741a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似數息觀。",
        "from": "X55n0918_001:0741a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止是淨水。",
        "from": "X55n0918_001:0741a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似不淨觀。",
        "from": "X55n0918_001:0741a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止是大慈。",
        "from": "X55n0918_001:0741a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似慈悲觀。",
        "from": "X55n0918_001:0741a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止是大明呪。",
        "from": "X55n0918_001:0741a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似十二因緣觀。",
        "from": "X55n0918_001:0741a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止是佛。",
        "from": "X55n0918_001:0741a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似念佛觀。",
        "from": "X55n0918_001:0741a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意如此對也。",
        "from": "X55n0918_001:0741a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記不釋。",
        "from": "X55n0918_001:0741a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又大經後料簡中言四四十六門者。",
        "from": "X55n0918_001:0741a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記不說。",
        "from": "X55n0918_001:0741a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意云。",
        "from": "X55n0918_001:0741a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生門破一切法。",
        "from": "X55n0918_001:0741a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生門立一切法。",
        "from": "X55n0918_001:0741a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生門亦破亦立。",
        "from": "X55n0918_001:0741a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生門非破非立。",
        "from": "X55n0918_001:0741a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘門乃至滅門亦如是。",
        "from": "X55n0918_001:0741a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有三十十門也。",
        "from": "X55n0918_001:0741a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又會三聶提中言五眾和合故名眾生者。",
        "from": "X55n0918_001:0741a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記將證前法波羅聶提。",
        "from": "X55n0918_001:0741a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意。",
        "from": "X55n0918_001:0741a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正是受波羅聶提。",
        "from": "X55n0918_001:0741a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五眾是法。",
        "from": "X55n0918_001:0741a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既屬法攝。",
        "from": "X55n0918_001:0741a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生假名。",
        "from": "X55n0918_001:0741a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故屬受也。",
        "from": "X55n0918_001:0741a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又相待假中自作三假云無生法塵者。",
        "from": "X55n0918_001:0741a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云。",
        "from": "X55n0918_001:0741a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因成相續中用觀推之。",
        "from": "X55n0918_001:0741a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得無生之解。",
        "from": "X55n0918_001:0741a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對此無解。",
        "from": "X55n0918_001:0741a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言無生法塵。",
        "from": "X55n0918_001:0741a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意不爾。",
        "from": "X55n0918_001:0741a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但相待中自有三假。",
        "from": "X55n0918_001:0741a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言無生法塵者。",
        "from": "X55n0918_001:0741a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即三無為之法是無生法塵也。",
        "from": "X55n0918_001:0741a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又思假中。",
        "from": "X55n0918_001:0741a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從若下界貪輕至非貪耶。",
        "from": "X55n0918_001:0741a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云。",
        "from": "X55n0918_001:0741a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有多並但引一。",
        "from": "X55n0918_001:0741a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云一並。",
        "from": "X55n0918_001:0741a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意。",
        "from": "X55n0918_001:0741a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一並下是止觀家救毗曇意云。",
        "from": "X55n0918_001:0741a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖如是難。",
        "from": "X55n0918_001:0741a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐失佛意。",
        "from": "X55n0918_001:0741a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云。",
        "from": "X55n0918_001:0741a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但佛有時對緣別說。",
        "from": "X55n0918_001:0741a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應言毗曇全非。",
        "from": "X55n0918_001:0741a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云假名何定。",
        "from": "X55n0918_001:0741a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又破思假中云次第斷及超斷者。",
        "from": "X55n0918_001:0741a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記意不引。",
        "from": "X55n0918_001:0741a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意。",
        "from": "X55n0918_001:0741a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但得名處。",
        "from": "X55n0918_001:0741a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別言次第者。",
        "from": "X55n0918_001:0741a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初用無漏智先斷見。",
        "from": "X55n0918_001:0741a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次斷思惟五品便入滅者。",
        "from": "X55n0918_001:0741a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得受斯陀含向名。",
        "from": "X55n0918_001:0741a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言超者。",
        "from": "X55n0918_001:0741a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初用世智斷欲界五品思竟。",
        "from": "X55n0918_001:0741a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後斷見時即是斷五品思也。",
        "from": "X55n0918_001:0741b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言超。",
        "from": "X55n0918_001:0741b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以世智斷惑弱故。",
        "from": "X55n0918_001:0741b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只同次第。",
        "from": "X55n0918_001:0741b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷第一二品後。",
        "from": "X55n0918_001:0741b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由受多家生。",
        "from": "X55n0918_001:0741b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言家家。",
        "from": "X55n0918_001:0741b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後例然。",
        "from": "X55n0918_001:0741b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又料簡超不超後瓔珞下。",
        "from": "X55n0918_001:0741b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意是證圓四句。",
        "from": "X55n0918_001:0741b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記不說。",
        "from": "X55n0918_001:0741b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又五種不淨後觀心無常中云籠破繫斷去不還者。",
        "from": "X55n0918_001:0741b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記云。",
        "from": "X55n0918_001:0741b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無學方名繫斷不還。",
        "from": "X55n0918_001:0741b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意。",
        "from": "X55n0918_001:0741b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是一期命終名繫斷不還。",
        "from": "X55n0918_001:0741b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云印壞文成也。",
        "from": "X55n0918_001:0741b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又攝十八不共法中。",
        "from": "X55n0918_001:0741b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘五不出。",
        "from": "X55n0918_001:0741b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但總結而已。",
        "from": "X55n0918_001:0741b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記但云。",
        "from": "X55n0918_001:0741b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝在慧及解脫無減中。",
        "from": "X55n0918_001:0741b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但粗略對當。",
        "from": "X55n0918_001:0741b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意。",
        "from": "X55n0918_001:0741b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推法界次第意。",
        "from": "X55n0918_001:0741b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將常照三世為三眾生心。",
        "from": "X55n0918_001:0741b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不須臾觀而為說法為無異想。",
        "from": "X55n0918_001:0741b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不失先念為慧無減也。",
        "from": "X55n0918_001:0741b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘如文。",
        "from": "X55n0918_001:0741b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言作宗朝義者。",
        "from": "X55n0918_001:0741b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記意。",
        "from": "X55n0918_001:0741b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸論但約當教。",
        "from": "X55n0918_001:0741b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未若止觀通有四教。",
        "from": "X55n0918_001:0741b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師意不然。",
        "from": "X55n0918_001:0741b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是經共論約宗多少也。",
        "from": "X55n0918_001:0741b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此本緣欲還本國。",
        "from": "X55n0918_001:0741b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草草出。",
        "from": "X55n0918_001:0741b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不委悉。",
        "from": "X55n0918_001:0741b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慮不周施權。",
        "from": "X55n0918_001:0741b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與記少乖。",
        "from": "X55n0918_001:0741b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦各有眉目。",
        "from": "X55n0918_001:0741b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後人覽者詳而鏡諸也。",
        "from": "X55n0918_001:0741b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指要鈔(卷上)曰。",
        "from": "X55n0918_001:0741b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "X55n0918_001:0741b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本傳來別行十門。",
        "from": "X55n0918_001:0741b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題云國清止觀。",
        "from": "X55n0918_001:0741b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚錄出。",
        "from": "X55n0918_001:0741b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云體同等者。",
        "from": "X55n0918_001:0741b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未審止觀和尚又是誰耶。",
        "from": "X55n0918_001:0741b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人深諳一家教不。",
        "from": "X55n0918_001:0741b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始錄之本全不錯不。",
        "from": "X55n0918_001:0741b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈以先死之人遵之為右。",
        "from": "X55n0918_001:0741b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所立之事皆可依耶。",
        "from": "X55n0918_001:0741b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如乾淑所錄邃和尚止觀中異義。",
        "from": "X55n0918_001:0741b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以三界為無漏。",
        "from": "X55n0918_001:0741b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總中之三可盡遵不。",
        "from": "X55n0918_001:0741b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況諸異義。",
        "from": "X55n0918_001:0741b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特違輔行。",
        "from": "X55n0918_001:0741b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自立己見。",
        "from": "X55n0918_001:0741b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故皆云記文易見。",
        "from": "X55n0918_001:0741b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚(云云)。",
        "from": "X55n0918_001:0741b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此師又稱第七祖。",
        "from": "X55n0918_001:0741b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知止觀和尚多是此師。",
        "from": "X55n0918_001:0741b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若其是者。",
        "from": "X55n0918_001:0741b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則全不可依。",
        "from": "X55n0918_001:0741b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既暗荊溪深旨。",
        "from": "X55n0918_001:0741b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有改易也。",
        "from": "X55n0918_001:0741b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又日本教乘脫誤亦多。",
        "from": "X55n0918_001:0741b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有別行十不二門則全同(奉先源清)所定之本。",
        "from": "X55n0918_001:0741c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他既曾附示珠指往於彼國。",
        "from": "X55n0918_001:0741c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必是依之勘寫爾。",
        "from": "X55n0918_001:0741c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設是舊本。",
        "from": "X55n0918_001:0741c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須將義勘。",
        "from": "X55n0918_001:0741c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫可專文。",
        "from": "X55n0918_001:0741c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志磐述曰。",
        "from": "X55n0918_001:0741c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指要斥日本乾淑所錄邃和上止觀中異義。",
        "from": "X55n0918_001:0741c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以三界為無漏總中三者。",
        "from": "X55n0918_001:0741c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊詳邃師親受止觀於荊溪。",
        "from": "X55n0918_001:0741c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣輙創此說。",
        "from": "X55n0918_001:0741c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特乾淑輩為此私義。",
        "from": "X55n0918_001:0741c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "託邃師以行之耳。",
        "from": "X55n0918_001:0741c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知日本別行十不二門題曰國清止觀和上者。",
        "from": "X55n0918_001:0741c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆其國人之依放也。",
        "from": "X55n0918_001:0741c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指要又云。",
        "from": "X55n0918_001:0741c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他既曾附示珠指往於彼國。",
        "from": "X55n0918_001:0741c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必是依之勘寫。",
        "from": "X55n0918_001:0741c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據此又知國人依奉先所寄之本故。",
        "from": "X55n0918_001:0741c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并託止觀和上之名以行其文也。",
        "from": "X55n0918_001:0741c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明之言。",
        "from": "X55n0918_001:0741c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斥乾淑奉先耳。",
        "from": "X55n0918_001:0741c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人不窹。",
        "from": "X55n0918_001:0741c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便謂斥邃師。",
        "from": "X55n0918_001:0741c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請以此義為解。",
        "from": "X55n0918_001:0741c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本寶地私記云。",
        "from": "X55n0918_001:0741c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有記中異義一卷。",
        "from": "X55n0918_001:0741c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是道遂和尚於弘決外引出異義。",
        "from": "X55n0918_001:0741c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子乾淑聞而述之(已上)。",
        "from": "X55n0918_001:0741c14_3",
        "context_with_next_sentence": false
    }
]