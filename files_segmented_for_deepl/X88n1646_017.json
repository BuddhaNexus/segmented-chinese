[
    {
        "source_sentence": "居士傳十七",
        "from": "X88n1646_017:0214c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龐居士傳",
        "from": "X88n1646_017:0214c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龐居士者。",
        "from": "X88n1646_017:0214c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名蘊。",
        "from": "X88n1646_017:0214c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字道元。",
        "from": "X88n1646_017:0214c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "襄陽人也。",
        "from": "X88n1646_017:0214c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父任衡陽太守。",
        "from": "X88n1646_017:0214c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寓居城南。",
        "from": "X88n1646_017:0214c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建菴於宅西。",
        "from": "X88n1646_017:0214c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為修行之所。",
        "from": "X88n1646_017:0214c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐貞元初參石頭禪師。",
        "from": "X88n1646_017:0214c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問不與萬法為侶者是甚麼人。",
        "from": "X88n1646_017:0214c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石頭以手掩其口。",
        "from": "X88n1646_017:0214c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁然有省。",
        "from": "X88n1646_017:0214c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日石頭問曰。",
        "from": "X88n1646_017:0214c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子見老僧以來。",
        "from": "X88n1646_017:0214c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日用事作麼生。",
        "from": "X88n1646_017:0214c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_017:0214c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若問日用事。",
        "from": "X88n1646_017:0214c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無開口處。",
        "from": "X88n1646_017:0214c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃呈偈曰。",
        "from": "X88n1646_017:0214c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日用事無別。",
        "from": "X88n1646_017:0214c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟吾自偶諧。",
        "from": "X88n1646_017:0214c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭頭非取捨。",
        "from": "X88n1646_017:0214c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處沒張乖。",
        "from": "X88n1646_017:0214c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱紫誰為號。",
        "from": "X88n1646_017:0214c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邱山絕點埃。",
        "from": "X88n1646_017:0214c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通并妙用。",
        "from": "X88n1646_017:0214c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運水及搬柴。",
        "from": "X88n1646_017:0214c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石頭然之。",
        "from": "X88n1646_017:0214c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後參馬祖。",
        "from": "X88n1646_017:0214c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復問不與萬法為侶者是甚麼人。",
        "from": "X88n1646_017:0214c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖曰。",
        "from": "X88n1646_017:0214c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "待汝一口吸盡西江水即向汝道。",
        "from": "X88n1646_017:0214c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道元於言下領旨。",
        "from": "X88n1646_017:0214c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留駐二載。",
        "from": "X88n1646_017:0214c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自後機鋒迅捷。",
        "from": "X88n1646_017:0214c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸方莫能難。",
        "from": "X88n1646_017:0214c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞以舟載家珍數萬沈之湘流。",
        "from": "X88n1646_017:0214c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元和初歸襄陽。",
        "from": "X88n1646_017:0214c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棲止巖竇。",
        "from": "X88n1646_017:0214c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與妻子及女靈照市鬻竹器以自活。",
        "from": "X88n1646_017:0214c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞作偈曰。",
        "from": "X88n1646_017:0214c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有男不婚。",
        "from": "X88n1646_017:0214c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有女不嫁。",
        "from": "X88n1646_017:0214c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大家團欒頭。",
        "from": "X88n1646_017:0214c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共說無生話。",
        "from": "X88n1646_017:0214c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作偈曰。",
        "from": "X88n1646_017:0214c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心如境如。",
        "from": "X88n1646_017:0214c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無實無虗。",
        "from": "X88n1646_017:0214c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是賢聖。",
        "from": "X88n1646_017:0214c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了事凡夫。",
        "from": "X88n1646_017:0214c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士將入滅。",
        "from": "X88n1646_017:0214c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂靈照曰。",
        "from": "X88n1646_017:0215a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視日早晚。",
        "from": "X88n1646_017:0215a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及午以報。",
        "from": "X88n1646_017:0215a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈照遽報曰。",
        "from": "X88n1646_017:0215a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日已午矣。",
        "from": "X88n1646_017:0215a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有蝕也。",
        "from": "X88n1646_017:0215a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可試觀之。",
        "from": "X88n1646_017:0215a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士避席臨窓。",
        "from": "X88n1646_017:0215a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈照即據榻趺坐而化。",
        "from": "X88n1646_017:0215a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士笑曰。",
        "from": "X88n1646_017:0215a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾女鋒捷矣。",
        "from": "X88n1646_017:0215a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃拾薪燔之。",
        "from": "X88n1646_017:0215a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展期七日。",
        "from": "X88n1646_017:0215a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太守于頔素與親厚。",
        "from": "X88n1646_017:0215a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃往問安。",
        "from": "X88n1646_017:0215a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士曰。",
        "from": "X88n1646_017:0215a04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但願空諸所有。",
        "from": "X88n1646_017:0215a04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎勿實諸所無。",
        "from": "X88n1646_017:0215a05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好住世間。",
        "from": "X88n1646_017:0215a05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如影響。",
        "from": "X88n1646_017:0215a05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖端躬若思。",
        "from": "X88n1646_017:0215a05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異香滿室。",
        "from": "X88n1646_017:0215a06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頔亟呼之。",
        "from": "X88n1646_017:0215a06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已逝矣。",
        "from": "X88n1646_017:0215a06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺命焚棄江湖。",
        "from": "X88n1646_017:0215a06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頔遣使報其妻。",
        "from": "X88n1646_017:0215a07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻曰。",
        "from": "X88n1646_017:0215a07_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這癡女與無知老漢。",
        "from": "X88n1646_017:0215a07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不報而去。",
        "from": "X88n1646_017:0215a07_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何忍也。",
        "from": "X88n1646_017:0215a08_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因往告子。",
        "from": "X88n1646_017:0215a08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子方斸畬。",
        "from": "X88n1646_017:0215a08_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋鉏應曰嗄。",
        "from": "X88n1646_017:0215a08_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良久亦立而亡去。",
        "from": "X88n1646_017:0215a08_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻曰。",
        "from": "X88n1646_017:0215a09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚子癡何甚也。",
        "from": "X88n1646_017:0215a09_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦燔之。",
        "from": "X88n1646_017:0215a09_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未幾徧詣鄉閭告別隱去。",
        "from": "X88n1646_017:0215a09_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知所終(傳燈錄．龐居士集序)。",
        "from": "X88n1646_017:0215a10_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_017:0215a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予少讀寒山大士詩。",
        "from": "X88n1646_017:0215a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂之如遊危峯邃澗。",
        "from": "X88n1646_017:0215a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中聞懸泉滴乳。",
        "from": "X88n1646_017:0215a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "松籟徐吹。",
        "from": "X88n1646_017:0215a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五蘊聚落一時杳寂。",
        "from": "X88n1646_017:0215a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而讀龐居士詩。",
        "from": "X88n1646_017:0215a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如刺船入海。",
        "from": "X88n1646_017:0215a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天水空同。",
        "from": "X88n1646_017:0215a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大浮根脫然漚謝。",
        "from": "X88n1646_017:0215a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1646_017:0215a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魚山清梵。",
        "from": "X88n1646_017:0215a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伽陵仙音。",
        "from": "X88n1646_017:0215a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎剎塵塵。",
        "from": "X88n1646_017:0215a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度生無盡矣。",
        "from": "X88n1646_017:0215a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_017:0215a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "看龐家老老大大。",
        "from": "X88n1646_017:0215a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊戲寂滅光中。",
        "from": "X88n1646_017:0215a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一何似老杜詩云。",
        "from": "X88n1646_017:0215a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿花蛺蝶深深見。",
        "from": "X88n1646_017:0215a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點水蜻蜓欵欵飛也。",
        "from": "X88n1646_017:0215a17_5",
        "context_with_next_sentence": false
    }
]