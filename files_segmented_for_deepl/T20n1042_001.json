[
    {
        "source_sentence": "觀自在菩薩大悲智印周遍法界",
        "from": "T20n1042_001:0033a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益眾生薰真如法一卷",
        "from": "T20n1042_001:0033a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐特進試鴻臚卿加開府儀同",
        "from": "T20n1042_001:0033a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三司封肅國公贈司空諡大辨正",
        "from": "T20n1042_001:0033a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智不空三藏和尚譯",
        "from": "T20n1042_001:0033a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我蒙毘盧遮那聖旨。",
        "from": "T20n1042_001:0033a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說觀自在摩訶(大)枳孃曩(智)母怛羅(印)法。",
        "from": "T20n1042_001:0033a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有修瑜伽人。",
        "from": "T20n1042_001:0033a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生西方極樂世界利益眾生者。",
        "from": "T20n1042_001:0033a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從阿闍梨耶有智熟者。",
        "from": "T20n1042_001:0033a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而受蓮華金剛法儀。",
        "from": "T20n1042_001:0033b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣陳供養作念誦法。",
        "from": "T20n1042_001:0033b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其壇中安置香爐。",
        "from": "T20n1042_001:0033b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其香爐含攝觀自在周遍法界之相。",
        "from": "T20n1042_001:0033b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以何為相。",
        "from": "T20n1042_001:0033b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即其香印應作紇哩(二合)文。",
        "from": "T20n1042_001:0033b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智業不可得理。",
        "from": "T20n1042_001:0033b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝四種義合成一字。",
        "from": "T20n1042_001:0033b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其梵文是也。",
        "from": "T20n1042_001:0033b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賀字諸法因不可得。",
        "from": "T20n1042_001:0033b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅字清淨無垢染。",
        "from": "T20n1042_001:0033b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊字自在不可得。",
        "from": "T20n1042_001:0033b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡字本不生不滅。",
        "from": "T20n1042_001:0033b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為順義。",
        "from": "T20n1042_001:0033b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本不生不滅。",
        "from": "T20n1042_001:0033b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在不可得。",
        "from": "T20n1042_001:0033b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨無垢染。",
        "from": "T20n1042_001:0033b08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法因不可得。",
        "from": "T20n1042_001:0033b08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為逆義。",
        "from": "T20n1042_001:0033b09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逆順相應顯香印文。",
        "from": "T20n1042_001:0033b09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我作其圖。",
        "from": "T20n1042_001:0033b09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是妙香印名大悲拔苦。",
        "from": "T20n1042_001:0033b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T20n1042_001:0033b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依燒之次第。",
        "from": "T20n1042_001:0033b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而顯真實理。",
        "from": "T20n1042_001:0033b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若燒盡時。",
        "from": "T20n1042_001:0033b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表若順若逆遂歸空法也。",
        "from": "T20n1042_001:0033b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處當觀察。",
        "from": "T20n1042_001:0033b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從紇哩(二合)一字。",
        "from": "T20n1042_001:0033b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生唵嚩日羅(二合)達磨等五字。",
        "from": "T20n1042_001:0033b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一字中出生無量字門。",
        "from": "T20n1042_001:0033b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一字門化作一切佛菩薩身。",
        "from": "T20n1042_001:0033b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一化身周遍法界利益眾生。",
        "from": "T20n1042_001:0033b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者得無量福。",
        "from": "T20n1042_001:0033b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉地圓滿蒙諸佛加被。",
        "from": "T20n1042_001:0033b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者獲現世安穩無諸障礙。",
        "from": "T20n1042_001:0033b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如妙蓮華。",
        "from": "T20n1042_001:0033b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者愛惜。",
        "from": "T20n1042_001:0033b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉已得生極樂上品蓮中。",
        "from": "T20n1042_001:0033b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有利根智慧方便。",
        "from": "T20n1042_001:0033b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現身見佛。",
        "from": "T20n1042_001:0033b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得陀羅尼名。",
        "from": "T20n1042_001:0033b29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不染世也。",
        "from": "T20n1042_001:0033b29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處身出妙香。",
        "from": "T20n1042_001:0033b29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍十方國。",
        "from": "T20n1042_001:0033c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生得薰。",
        "from": "T20n1042_001:0033c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆證不退。",
        "from": "T20n1042_001:0033c01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是功德不可具說。",
        "from": "T20n1042_001:0033c01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其香爐蓋上。",
        "from": "T20n1042_001:0033c02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可雕嚩日羅(二合)達磨字。",
        "from": "T20n1042_001:0033c02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首加唵字以為五字(可旋順)其蓋中央應立三昧耶形。",
        "from": "T20n1042_001:0033c03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一鈷杵上安開八葉蓮華是也。",
        "from": "T20n1042_001:0033c04_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上五字圍繞此三昧耶。",
        "from": "T20n1042_001:0033c05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧耶者是本誓之形也。",
        "from": "T20n1042_001:0033c05_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見此形作禮專念。",
        "from": "T20n1042_001:0033c06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即證蓮華性。",
        "from": "T20n1042_001:0033c06_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以生極樂者更不染世。",
        "from": "T20n1042_001:0033c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設交世間。",
        "from": "T20n1042_001:0033c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度眾生如蓮華不為諸垢所染也。",
        "from": "T20n1042_001:0033c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由過去本誓願力故。",
        "from": "T20n1042_001:0033c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證此果界也。",
        "from": "T20n1042_001:0033c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者立此三昧耶形。",
        "from": "T20n1042_001:0033c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應專念之而作是想。",
        "from": "T20n1042_001:0033c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是文之香煙成此三昧耶形。",
        "from": "T20n1042_001:0033c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此形更為本尊形體。",
        "from": "T20n1042_001:0033c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表因時本誓。",
        "from": "T20n1042_001:0033c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂為果時形色。",
        "from": "T20n1042_001:0033c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是三昧耶義也。",
        "from": "T20n1042_001:0033c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香之時結本尊契。",
        "from": "T20n1042_001:0033c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦是本真言印之。",
        "from": "T20n1042_001:0033c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得成就。",
        "from": "T20n1042_001:0033c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其蓋圖如斯。",
        "from": "T20n1042_001:0033c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　圖",
        "from": "T20n1042_001:0033c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(如上香印略說)。",
        "from": "T20n1042_001:0034a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得入此輪至無上菩提。",
        "from": "T20n1042_001:0034a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲不間常誦真言。",
        "from": "T20n1042_001:0034a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而未離攀緣擬懈怠者。",
        "from": "T20n1042_001:0034a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依是妙印。",
        "from": "T20n1042_001:0034a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應燒栴檀蓮等香。",
        "from": "T20n1042_001:0034a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是每日作燒香法者。",
        "from": "T20n1042_001:0034a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成常業誦持金剛法明。",
        "from": "T20n1042_001:0034a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1042_001:0034a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上真言字義。",
        "from": "T20n1042_001:0034a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆於此印香能顯示故。",
        "from": "T20n1042_001:0034a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根本印。",
        "from": "T20n1042_001:0034a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛縛。",
        "from": "T20n1042_001:0034a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指頭合如蓮華葉。",
        "from": "T20n1042_001:0034a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指並立即成。",
        "from": "T20n1042_001:0034a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1042_001:0034a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持此一字真言。",
        "from": "T20n1042_001:0034a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除一切災禍疾病。",
        "from": "T20n1042_001:0034a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後當得極樂上品之生。",
        "from": "T20n1042_001:0034a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘諸所求世間出世大願隨持得成。",
        "from": "T20n1042_001:0034a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況依此教法而修行者。",
        "from": "T20n1042_001:0034a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切悉地不久圓滿也。",
        "from": "T20n1042_001:0034a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩薰真如香印法說已竟。",
        "from": "T20n1042_001:0034a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在妙香印法一卷",
        "from": "T20n1042_001:0034a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "享保龍集乙卯仲夏之穀。",
        "from": "T20n1042_001:0034a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以淨嚴和尚之點本。",
        "from": "T20n1042_001:0034a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將讐校之壽梓。",
        "from": "T20n1042_001:0034b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以香煙輝真如雲覆剎塵。",
        "from": "T20n1042_001:0034b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大和長谷妙音院輪下沙門無等誌",
        "from": "T20n1042_001:0034b03_0",
        "context_with_next_sentence": false
    }
]