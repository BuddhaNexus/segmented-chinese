[
    {
        "source_sentence": "佛祖綱目卷第十(月字號)",
        "from": "X85n1594_010:0574b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(周景王八年起)壬午(敬王元年)癸亥(周敬王四十一年止)(丙寅)八祖佛陀難提傳法伏馱蜜多佛陀難提。",
        "from": "X85n1594_010:0574b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦摩羅國人。",
        "from": "X85n1594_010:0574b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓瞿曇氏。",
        "from": "X85n1594_010:0574b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂有肉髻。",
        "from": "X85n1594_010:0574b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯捷無礙。",
        "from": "X85n1594_010:0574b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初遇婆須蜜。",
        "from": "X85n1594_010:0574c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳佛心印。",
        "from": "X85n1594_010:0574c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而領徒行化。",
        "from": "X85n1594_010:0574c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至提迦國毗舍羅家。",
        "from": "X85n1594_010:0574c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見舍上有白光上騰。",
        "from": "X85n1594_010:0574c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂其徒曰。",
        "from": "X85n1594_010:0574c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此家有聖人。",
        "from": "X85n1594_010:0574c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口無言說。",
        "from": "X85n1594_010:0574c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真大乘器。",
        "from": "X85n1594_010:0574c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不行四衢。",
        "from": "X85n1594_010:0574c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知觸穢耳。",
        "from": "X85n1594_010:0574c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖。",
        "from": "X85n1594_010:0574c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者出致禮。",
        "from": "X85n1594_010:0574c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問何所須。",
        "from": "X85n1594_010:0574c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_010:0574c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我求侍者。",
        "from": "X85n1594_010:0574c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者曰。",
        "from": "X85n1594_010:0574c04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有一子。",
        "from": "X85n1594_010:0574c04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名伏馱蜜多。",
        "from": "X85n1594_010:0574c05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年已五十。",
        "from": "X85n1594_010:0574c05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口未曾言。",
        "from": "X85n1594_010:0574c05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足未曾履。",
        "from": "X85n1594_010:0574c05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_010:0574c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所說。",
        "from": "X85n1594_010:0574c06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真吾弟子。",
        "from": "X85n1594_010:0574c06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏馱蜜多聞之。",
        "from": "X85n1594_010:0574c06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽起禮拜。",
        "from": "X85n1594_010:0574c06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈曰。",
        "from": "X85n1594_010:0574c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母非我親。",
        "from": "X85n1594_010:0574c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰是最親者。",
        "from": "X85n1594_010:0574c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛非我道。",
        "from": "X85n1594_010:0574c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰為最道者。",
        "from": "X85n1594_010:0574c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛陀難提乃以偈答曰。",
        "from": "X85n1594_010:0574c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝言與心親。",
        "from": "X85n1594_010:0574c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母非可比。",
        "from": "X85n1594_010:0574c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝行與道合。",
        "from": "X85n1594_010:0574c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛心即是。",
        "from": "X85n1594_010:0574c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外求有相佛。",
        "from": "X85n1594_010:0574c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與汝不相似。",
        "from": "X85n1594_010:0574c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲識汝本心。",
        "from": "X85n1594_010:0574c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非合亦非離。",
        "from": "X85n1594_010:0574c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏馱蜜多聞偈已。",
        "from": "X85n1594_010:0574c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便行七步。",
        "from": "X85n1594_010:0574c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提遂曰。",
        "from": "X85n1594_010:0574c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此子昔曾值佛。",
        "from": "X85n1594_010:0574c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲願廣大。",
        "from": "X85n1594_010:0574c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慮父母愛情難捨。",
        "from": "X85n1594_010:0574c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不言不履耳。",
        "from": "X85n1594_010:0574c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者遂捨令出家。",
        "from": "X85n1594_010:0574c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提尋授具戒。",
        "from": "X85n1594_010:0574c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告之曰。",
        "from": "X85n1594_010:0574c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今以如來正法眼藏。",
        "from": "X85n1594_010:0574c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑於汝。",
        "from": "X85n1594_010:0574c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令斷絕。",
        "from": "X85n1594_010:0574c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃說偈曰。",
        "from": "X85n1594_010:0574c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗空無內外。",
        "from": "X85n1594_010:0574c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心法亦如此。",
        "from": "X85n1594_010:0574c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若了虗空故。",
        "from": "X85n1594_010:0574c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是達真如理。",
        "from": "X85n1594_010:0574c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏馱蜜多承難陀付囑。",
        "from": "X85n1594_010:0574c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即超身虗空。",
        "from": "X85n1594_010:0574c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散眾寶花。",
        "from": "X85n1594_010:0574c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偈讚曰。",
        "from": "X85n1594_010:0574c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我師禪祖中。",
        "from": "X85n1594_010:0574c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得為第八。",
        "from": "X85n1594_010:0574c16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法化眾無量。",
        "from": "X85n1594_010:0574c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉獲阿羅漢。",
        "from": "X85n1594_010:0574c17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時難陀。",
        "from": "X85n1594_010:0574c17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽起本座。",
        "from": "X85n1594_010:0574c17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現大神變。",
        "from": "X85n1594_010:0574c17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却復本座。",
        "from": "X85n1594_010:0574c18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儼然寂滅。",
        "from": "X85n1594_010:0574c18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾即其所興建寶塔。",
        "from": "X85n1594_010:0574c18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閟其全身。",
        "from": "X85n1594_010:0574c18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時當此土周景王十年丙寅歲也。",
        "from": "X85n1594_010:0574c19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(壬午)震旦國李耳西入流沙",
        "from": "X85n1594_010:0574c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周簡王四年。",
        "from": "X85n1594_010:0574c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李耳仕周。",
        "from": "X85n1594_010:0574c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為守藏吏。",
        "from": "X85n1594_010:0574c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三年遷為柱下史。",
        "from": "X85n1594_010:0574c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自是五十四年。",
        "from": "X85n1594_010:0574c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一職不遷。",
        "from": "X85n1594_010:0574c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人目為吏隱。",
        "from": "X85n1594_010:0574c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬王元年。",
        "from": "X85n1594_010:0574c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳年八十六。",
        "from": "X85n1594_010:0574c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以王室凌遲。",
        "from": "X85n1594_010:0574c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂去周。",
        "from": "X85n1594_010:0574c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西入函谷關。",
        "from": "X85n1594_010:0574c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "關令尹喜見紫雲西邁。",
        "from": "X85n1594_010:0574c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知有道人當度。",
        "from": "X85n1594_010:0574c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂迎設禮。",
        "from": "X85n1594_010:0574c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳乃為著道德經五千言。",
        "from": "X85n1594_010:0574c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與尹喜。",
        "from": "X85n1594_010:0575a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂西入流沙。",
        "from": "X85n1594_010:0575a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至罽賓國。",
        "from": "X85n1594_010:0575a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見浮屠。",
        "from": "X85n1594_010:0575a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自傷不及。",
        "from": "X85n1594_010:0575a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃對像說偈云。",
        "from": "X85n1594_010:0575a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我生何以晚。",
        "from": "X85n1594_010:0575a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出一何蚤。",
        "from": "X85n1594_010:0575a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見釋迦文。",
        "from": "X85n1594_010:0575a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心中常懊惱。",
        "from": "X85n1594_010:0575a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後莫知所終。",
        "from": "X85n1594_010:0575a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(甲寅)九祖伏馱蜜多傳法脇尊者",
        "from": "X85n1594_010:0575a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏馱蜜多。",
        "from": "X85n1594_010:0575a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提伽國人。",
        "from": "X85n1594_010:0575a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓毗舍羅。",
        "from": "X85n1594_010:0575a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既受佛陀難提付囑。",
        "from": "X85n1594_010:0575a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後行化。",
        "from": "X85n1594_010:0575a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至中印度。",
        "from": "X85n1594_010:0575a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有長者香蓋。",
        "from": "X85n1594_010:0575a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "携一子而來。",
        "from": "X85n1594_010:0575a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻禮曰。",
        "from": "X85n1594_010:0575a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此子處胎六十歲。",
        "from": "X85n1594_010:0575a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因號難生。",
        "from": "X85n1594_010:0575a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復嘗會一仙。",
        "from": "X85n1594_010:0575a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此兒骨相非常。",
        "from": "X85n1594_010:0575a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為法器。",
        "from": "X85n1594_010:0575a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今遇尊者。",
        "from": "X85n1594_010:0575a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可捨令出家。",
        "from": "X85n1594_010:0575a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜜多即與落髮。",
        "from": "X85n1594_010:0575a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯磨之際。",
        "from": "X85n1594_010:0575a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祥光燭座。",
        "from": "X85n1594_010:0575a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍感舍利三七粒現前。",
        "from": "X85n1594_010:0575a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自此精進忘疲。",
        "from": "X85n1594_010:0575a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未幾蜜多告曰。",
        "from": "X85n1594_010:0575a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大法眼藏。",
        "from": "X85n1594_010:0575a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今付於汝。",
        "from": "X85n1594_010:0575a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝護念之。",
        "from": "X85n1594_010:0575a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃說偈曰。",
        "from": "X85n1594_010:0575a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真理本無名。",
        "from": "X85n1594_010:0575a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因名顯真理。",
        "from": "X85n1594_010:0575a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受得真實法。",
        "from": "X85n1594_010:0575a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非真亦非偽。",
        "from": "X85n1594_010:0575a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜜多付法已。",
        "from": "X85n1594_010:0575a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入滅盡三昧。",
        "from": "X85n1594_010:0575a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而般涅槃。",
        "from": "X85n1594_010:0575a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾以香油旃檀闍維。",
        "from": "X85n1594_010:0575a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收舍利。",
        "from": "X85n1594_010:0575a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建塔於那爛陀寺。",
        "from": "X85n1594_010:0575a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土周敬王三十三年甲寅歲也。",
        "from": "X85n1594_010:0575a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(壬戌)震旦國孔丘示寂",
        "from": "X85n1594_010:0575a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子年十七朝周問禮於老子。",
        "from": "X85n1594_010:0575a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訪樂於萇弘。",
        "from": "X85n1594_010:0575a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自周反魯。",
        "from": "X85n1594_010:0575a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周敬王十九年。",
        "from": "X85n1594_010:0575a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為魯中都宰。",
        "from": "X85n1594_010:0575a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定養生送死之節。",
        "from": "X85n1594_010:0575a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長幼異食。",
        "from": "X85n1594_010:0575a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強弱異任。",
        "from": "X85n1594_010:0575a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一年而四方諸侯則焉。",
        "from": "X85n1594_010:0575a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魯定公曰。",
        "from": "X85n1594_010:0575a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此法治魯何如。",
        "from": "X85n1594_010:0575a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰雖天下可也。",
        "from": "X85n1594_010:0575a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十一年。",
        "from": "X85n1594_010:0575a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為魯司空。",
        "from": "X85n1594_010:0575a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立五土之性。",
        "from": "X85n1594_010:0575a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而物各得其所生之宜。",
        "from": "X85n1594_010:0575a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十二年。",
        "from": "X85n1594_010:0575a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魯定公與齊景公。",
        "from": "X85n1594_010:0575a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會於夾谷。",
        "from": "X85n1594_010:0575a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子攝相事。",
        "from": "X85n1594_010:0575a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊人歸所侵之田。",
        "from": "X85n1594_010:0575a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以謝過。",
        "from": "X85n1594_010:0575a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子為大司宼。",
        "from": "X85n1594_010:0575a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日而誅少正卯。",
        "from": "X85n1594_010:0575a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隳三都之城。",
        "from": "X85n1594_010:0575a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強公室弱私家。",
        "from": "X85n1594_010:0575a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊君卑臣。",
        "from": "X85n1594_010:0575a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政化盛行。",
        "from": "X85n1594_010:0575a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三月大治。",
        "from": "X85n1594_010:0575a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬻羔豚者弗飾價。",
        "from": "X85n1594_010:0575a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男女別於途道。",
        "from": "X85n1594_010:0575a24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不拾遺。",
        "from": "X85n1594_010:0575a24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方之客。",
        "from": "X85n1594_010:0575a24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至乎邑者。",
        "from": "X85n1594_010:0575b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求有司。",
        "from": "X85n1594_010:0575b01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定公受齊女樂。",
        "from": "X85n1594_010:0575b01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三日不聽政郊。",
        "from": "X85n1594_010:0575b01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不致膰爼。",
        "from": "X85n1594_010:0575b02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子遂行適衛。",
        "from": "X85n1594_010:0575b02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十三年。",
        "from": "X85n1594_010:0575b02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子自衛適陳過匡。",
        "from": "X85n1594_010:0575b02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匡人以孔子貌似陽貨圍之。",
        "from": "X85n1594_010:0575b03_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既解。",
        "from": "X85n1594_010:0575b03_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適宋。",
        "from": "X85n1594_010:0575b03_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與弟子習禮大樹下。",
        "from": "X85n1594_010:0575b03_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "司馬桓魋欲害之。",
        "from": "X85n1594_010:0575b04_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔其樹。",
        "from": "X85n1594_010:0575b04_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十二年。",
        "from": "X85n1594_010:0575b04_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子至陳。",
        "from": "X85n1594_010:0575b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十五年。",
        "from": "X85n1594_010:0575b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楚攻陳。",
        "from": "X85n1594_010:0575b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子在陳。",
        "from": "X85n1594_010:0575b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕糧。",
        "from": "X85n1594_010:0575b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復去陳反衛。",
        "from": "X85n1594_010:0575b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十六年。",
        "from": "X85n1594_010:0575b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子自衛反魯。",
        "from": "X85n1594_010:0575b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刪詩書。",
        "from": "X85n1594_010:0575b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定禮樂。",
        "from": "X85n1594_010:0575b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫周易。",
        "from": "X85n1594_010:0575b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作春秋。",
        "from": "X85n1594_010:0575b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七十子之疇。",
        "from": "X85n1594_010:0575b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會集孔子所言。",
        "from": "X85n1594_010:0575b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為論語。",
        "from": "X85n1594_010:0575b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十九年。",
        "from": "X85n1594_010:0575b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(魯哀公十四年)魯哀公西狩獲麟。",
        "from": "X85n1594_010:0575b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子傷麟之出非其時。",
        "from": "X85n1594_010:0575b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂絕筆於春秋。",
        "from": "X85n1594_010:0575b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四十一年四月己丑。",
        "from": "X85n1594_010:0575b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子蚤作負。",
        "from": "X85n1594_010:0575b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手曳杖。",
        "from": "X85n1594_010:0575b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逍遙於門。",
        "from": "X85n1594_010:0575b10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌曰。",
        "from": "X85n1594_010:0575b10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泰山其頺乎。",
        "from": "X85n1594_010:0575b10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁木其壞乎。",
        "from": "X85n1594_010:0575b10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哲人其萎乎。",
        "from": "X85n1594_010:0575b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子貢聞之曰。",
        "from": "X85n1594_010:0575b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫子殆將病也。",
        "from": "X85n1594_010:0575b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趨而入。",
        "from": "X85n1594_010:0575b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子曰。",
        "from": "X85n1594_010:0575b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予疇昔之夜。",
        "from": "X85n1594_010:0575b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢奠於兩楹之間。",
        "from": "X85n1594_010:0575b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明王不興。",
        "from": "X85n1594_010:0575b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而天下其孰能宗予。",
        "from": "X85n1594_010:0575b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予殆將死也。",
        "from": "X85n1594_010:0575b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋寢疾七日而歿。",
        "from": "X85n1594_010:0575b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年七十二。",
        "from": "X85n1594_010:0575b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塟魯城北泗水上。",
        "from": "X85n1594_010:0575b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子皆服心喪三年。",
        "from": "X85n1594_010:0575b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喪畢。",
        "from": "X85n1594_010:0575b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相訣而去。",
        "from": "X85n1594_010:0575b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟子貢廬於塚六年。",
        "from": "X85n1594_010:0575b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子及魯人。",
        "from": "X85n1594_010:0575b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往從塚而家者百餘室。",
        "from": "X85n1594_010:0575b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因命曰孔里。",
        "from": "X85n1594_010:0575b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子三千人。",
        "from": "X85n1594_010:0575b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身通六藝者。",
        "from": "X85n1594_010:0575b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七十有二人。",
        "from": "X85n1594_010:0575b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子生鯉。",
        "from": "X85n1594_010:0575b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字伯魚。",
        "from": "X85n1594_010:0575b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鯉生伋。",
        "from": "X85n1594_010:0575b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字子思。",
        "from": "X85n1594_010:0575b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伋學於曾子。",
        "from": "X85n1594_010:0575b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作中庸。",
        "from": "X85n1594_010:0575b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後有孟軻。",
        "from": "X85n1594_010:0575b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又受業於子思之門人。",
        "from": "X85n1594_010:0575b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總之冥合如來正法眼藏。",
        "from": "X85n1594_010:0575b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號曰儒宗。",
        "from": "X85n1594_010:0575b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初商太宰嚭。",
        "from": "X85n1594_010:0575b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問孔子曰。",
        "from": "X85n1594_010:0575b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫子聖者歟。",
        "from": "X85n1594_010:0575b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰丘博學強記。",
        "from": "X85n1594_010:0575b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非聖人也。",
        "from": "X85n1594_010:0575b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三王聖者歟。",
        "from": "X85n1594_010:0575b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰三王善用智勇。",
        "from": "X85n1594_010:0575b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖非丘所知。",
        "from": "X85n1594_010:0575b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五帝聖者歟。",
        "from": "X85n1594_010:0575b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰五帝善用仁信。",
        "from": "X85n1594_010:0575b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖非丘所知。",
        "from": "X85n1594_010:0575b22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三皇聖者歟。",
        "from": "X85n1594_010:0575b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰三皇善用時政。",
        "from": "X85n1594_010:0575b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖非丘所知。",
        "from": "X85n1594_010:0575b23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太宰大駭曰。",
        "from": "X85n1594_010:0575b23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則執為聖人乎。",
        "from": "X85n1594_010:0575b23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫子動容有間。",
        "from": "X85n1594_010:0575b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對曰。",
        "from": "X85n1594_010:0575b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丘聞西方有大聖焉。",
        "from": "X85n1594_010:0575b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不治而不亂。",
        "from": "X85n1594_010:0575b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不言而自信。",
        "from": "X85n1594_010:0575c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不化而自行。",
        "from": "X85n1594_010:0575c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蕩蕩乎人無能名焉。",
        "from": "X85n1594_010:0575c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第十",
        "from": "X85n1594_010:0575c03_0",
        "context_with_next_sentence": false
    }
]