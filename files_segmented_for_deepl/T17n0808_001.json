[
    {
        "source_sentence": "佛說犢子經",
        "from": "T17n0808_001:0754a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳月氏優婆塞支謙譯",
        "from": "T17n0808_001:0754a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是：一時佛在舍衛國祇洹阿那邠遲阿藍精舍。",
        "from": "T17n0808_001:0754a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛遇風患，當須牛乳。",
        "from": "T17n0808_001:0754a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有婆羅門大富，去城不遠。",
        "from": "T17n0808_001:0754a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時佛遣阿難言：「汝往到婆羅門家從乞牛乳。」",
        "from": "T17n0808_001:0754a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難受教而往，便至婆羅門家。",
        "from": "T17n0808_001:0754a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門問阿難言：「來何所求？」",
        "from": "T17n0808_001:0754a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難言：「如來向者小遇風患，故遣我乞牛乳耳。」",
        "from": "T17n0808_001:0754a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門言：「牛在彼間，自[穀禾+牛]取之。」",
        "from": "T17n0808_001:0754a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難即往到牛群所。",
        "from": "T17n0808_001:0754a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一牸牛，性常弊惡，無人能近。",
        "from": "T17n0808_001:0754a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難即自思惟：「我法不應自[穀禾+牛]取牛乳。」",
        "from": "T17n0808_001:0754a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋知阿難所念，即來，化作婆羅門像，在牛邊立。",
        "from": "T17n0808_001:0754a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難往倩言：「婆羅門！",
        "from": "T17n0808_001:0754a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我[穀禾+牛]取牛乳。」",
        "from": "T17n0808_001:0754a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語牛言：「如來遇小風患。",
        "from": "T17n0808_001:0754a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝與乳湩，令如來服之。",
        "from": "T17n0808_001:0754a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "差者，汝得福無量，不可稱計。",
        "from": "T17n0808_001:0754a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來者，是天上、天下之大師也。",
        "from": "T17n0808_001:0754a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以慈心憂念一切蠕動之類，欲令度脫一切苦惱。」",
        "from": "T17n0808_001:0754a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛言：「此手捫摸我乳，一何快耶！",
        "from": "T17n0808_001:0754a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前兩乳取去，置後兩乳用遺我子。",
        "from": "T17n0808_001:0754a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我子朝來未有所食。」",
        "from": "T17n0808_001:0754a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時犢子在邊立住，聞有佛名，即語母言：「持我乳分盡用與佛。",
        "from": "T17n0808_001:0754a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛者，天上、天下之大師也。",
        "from": "T17n0808_001:0754a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚難得值。",
        "from": "T17n0808_001:0754a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我自食草，飲水，足得活耳。",
        "from": "T17n0808_001:0754a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T17n0808_001:0754a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我先身以來常飲乳食，今當生牛身亦復飲乳。",
        "from": "T17n0808_001:0754a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間愚癡者甚多無量。",
        "from": "T17n0808_001:0754a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我先世時坐隨惡知識教，不信佛經，使我作牛、作馬經十六劫，而今乃得聞有佛名。",
        "from": "T17n0808_001:0754a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持我所食分，盡用與佛，滿器而去，令我後世智慧聰明，得道如佛。」",
        "from": "T17n0808_001:0754a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難持乳還至佛所。",
        "from": "T17n0808_001:0754b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛問阿難：「彼牛母子有何言說？」",
        "from": "T17n0808_001:0754b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難言：「大可怪也。",
        "from": "T17n0808_001:0754b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛先甚大弊惡，不可得近。",
        "from": "T17n0808_001:0754b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一婆羅門為我[穀禾+牛]乳，牛即調善。",
        "from": "T17n0808_001:0754b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母子共說。」",
        "from": "T17n0808_001:0754b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言：「此牛子母先世時不信佛經故，墮牛、馬中經十六劫。",
        "from": "T17n0808_001:0754b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今乃得悟，聞有佛名，便有慈心，以乳施佛。",
        "from": "T17n0808_001:0754b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼牛母子後世，當為彌勒佛沙門弟子，得大羅漢。",
        "from": "T17n0808_001:0754b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犢子死後，當為我懸繒、幡、蓋，散華，燒香，受持經戒。",
        "from": "T17n0808_001:0754b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過二十劫後當作佛，名乳光如來，度脫一切。」",
        "from": "T17n0808_001:0754b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言：「牛以好善心意與佛乳故，度諸苦難，後得無量福報。",
        "from": "T17n0808_001:0754b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣，佛不可不信，經不可不讀，道不可不學。",
        "from": "T17n0808_001:0754b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普告天上、天下，皆悉令知。」",
        "from": "T17n0808_001:0754b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說犢子經",
        "from": "T17n0808_001:0754b15_0",
        "context_with_next_sentence": false
    }
]