[
    {
        "source_sentence": "菩提達磨大師略辨大乘入道四行觀",
        "from": "X63n1217_001:0001a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子　曇琳　序",
        "from": "X63n1217_001:0001a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法師者西域南天竺國人。",
        "from": "X63n1217_001:0001a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是婆羅門國王第三之子也。",
        "from": "X63n1217_001:0001a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神慧疎朗。",
        "from": "X63n1217_001:0001a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞皆曉悟。",
        "from": "X63n1217_001:0001a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志存摩訶衍道。",
        "from": "X63n1217_001:0001a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故捨素隨緇。",
        "from": "X63n1217_001:0001a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹隆聖種冥心虗寂。",
        "from": "X63n1217_001:0001a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通鑒世事內外俱明。",
        "from": "X63n1217_001:0001a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德超世表。",
        "from": "X63n1217_001:0001a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲悔邊隅正教陵替。",
        "from": "X63n1217_001:0001a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂能遠涉山海遊化漢魏。",
        "from": "X63n1217_001:0001a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡心之士莫不歸信。",
        "from": "X63n1217_001:0001a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存見之流乃生譏謗。",
        "from": "X63n1217_001:0001a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時唯有道育惠可此二沙門。",
        "from": "X63n1217_001:0001a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年雖後生俊志高遠。",
        "from": "X63n1217_001:0001a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸逢法師事之數載。",
        "from": "X63n1217_001:0001a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔恭[言*恣]啟善蒙師意。",
        "from": "X63n1217_001:0001a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法師感其精誠誨以真道。",
        "from": "X63n1217_001:0001a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令如是安心。",
        "from": "X63n1217_001:0001a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是發行。",
        "from": "X63n1217_001:0001a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是順物。",
        "from": "X63n1217_001:0001a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是方便。",
        "from": "X63n1217_001:0001a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是大乘安心之法。",
        "from": "X63n1217_001:0001a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無錯謬。",
        "from": "X63n1217_001:0001a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是安心者壁觀。",
        "from": "X63n1217_001:0001a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是發行者四行。",
        "from": "X63n1217_001:0001a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是順物者防護譏嫌。",
        "from": "X63n1217_001:0001a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是方便者遣其不著。",
        "from": "X63n1217_001:0001a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此略序所由云爾。",
        "from": "X63n1217_001:0001a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫入道多途。",
        "from": "X63n1217_001:0001a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要而言之不出二種。",
        "from": "X63n1217_001:0001a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一是理入。",
        "from": "X63n1217_001:0001a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二是行入。",
        "from": "X63n1217_001:0001a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理入者謂藉教悟宗。",
        "from": "X63n1217_001:0001a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深信含生同一真性。",
        "from": "X63n1217_001:0001a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為客塵妄想所覆不能顯了。",
        "from": "X63n1217_001:0001a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若也捨妄歸真。",
        "from": "X63n1217_001:0001a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凝住壁觀。",
        "from": "X63n1217_001:0001a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無自無他。",
        "from": "X63n1217_001:0001a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡聖等一堅住不移。",
        "from": "X63n1217_001:0001a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不隨文教。",
        "from": "X63n1217_001:0001a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即與理冥符無有分別。",
        "from": "X63n1217_001:0001a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂然無為名之理入。",
        "from": "X63n1217_001:0001a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行入謂四行。",
        "from": "X63n1217_001:0001a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘諸行悉入此中。",
        "from": "X63n1217_001:0001a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等四耶。",
        "from": "X63n1217_001:0001b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一報冤行。",
        "from": "X63n1217_001:0001b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二隨緣行。",
        "from": "X63n1217_001:0001b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三無所求行。",
        "from": "X63n1217_001:0001b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四稱法行。",
        "from": "X63n1217_001:0001b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何。",
        "from": "X63n1217_001:0001b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報冤行。",
        "from": "X63n1217_001:0001b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂修道行人若受苦時。",
        "from": "X63n1217_001:0001b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當自念言。",
        "from": "X63n1217_001:0001b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我往昔無數劫中棄本從末流浪諸有。",
        "from": "X63n1217_001:0001b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多起冤憎違害無限。",
        "from": "X63n1217_001:0001b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今雖無犯。",
        "from": "X63n1217_001:0001b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我宿殃惡業果熟。",
        "from": "X63n1217_001:0001b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非天非人所能見與。",
        "from": "X63n1217_001:0001b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘心甘受都無冤訴。",
        "from": "X63n1217_001:0001b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X63n1217_001:0001b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逢苦不憂。",
        "from": "X63n1217_001:0001b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X63n1217_001:0001b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識達故。",
        "from": "X63n1217_001:0001b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心生時與理相應。",
        "from": "X63n1217_001:0001b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體冤進道。",
        "from": "X63n1217_001:0001b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說言報冤行。",
        "from": "X63n1217_001:0001b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二隨緣行者。",
        "from": "X63n1217_001:0001b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生無我並緣業所轉。",
        "from": "X63n1217_001:0001b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦樂齊受皆從緣生。",
        "from": "X63n1217_001:0001b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得勝報榮譽等事。",
        "from": "X63n1217_001:0001b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我過去宿因所感。",
        "from": "X63n1217_001:0001b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今方得之緣盡還無。",
        "from": "X63n1217_001:0001b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何喜之有。",
        "from": "X63n1217_001:0001b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得失從緣心無增減。",
        "from": "X63n1217_001:0001b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜風不動冥順於道。",
        "from": "X63n1217_001:0001b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說言隨緣行。",
        "from": "X63n1217_001:0001b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三無所求行者。",
        "from": "X63n1217_001:0001b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人長迷處處貪著名之為求。",
        "from": "X63n1217_001:0001b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者悟真理將俗反。",
        "from": "X63n1217_001:0001b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安心無為形隨運轉。",
        "from": "X63n1217_001:0001b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬有斯空無所願樂。",
        "from": "X63n1217_001:0001b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德黑暗常相隨逐。",
        "from": "X63n1217_001:0001b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界久居猶如火宅。",
        "from": "X63n1217_001:0001b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有身皆苦誰得而安。",
        "from": "X63n1217_001:0001b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達此處故捨諸有止想無求。",
        "from": "X63n1217_001:0001b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經曰。",
        "from": "X63n1217_001:0001b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有求皆苦。",
        "from": "X63n1217_001:0001b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無求即樂。",
        "from": "X63n1217_001:0001b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "判知無求真為道行。",
        "from": "X63n1217_001:0001b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言無所求行。",
        "from": "X63n1217_001:0001b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四稱法行者。",
        "from": "X63n1217_001:0001b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性淨之理目之為法。",
        "from": "X63n1217_001:0001b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此理眾相斯空。",
        "from": "X63n1217_001:0001b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染無著無此無彼。",
        "from": "X63n1217_001:0001b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經曰法無眾生離眾生垢故。",
        "from": "X63n1217_001:0001b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無有我離我垢故。",
        "from": "X63n1217_001:0001b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者若能信解此理。",
        "from": "X63n1217_001:0001b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當稱法而行。",
        "from": "X63n1217_001:0001b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法體無慳身命財。",
        "from": "X63n1217_001:0001b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行檀捨施心無恡惜。",
        "from": "X63n1217_001:0001b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫解三空不倚不著但為去垢。",
        "from": "X63n1217_001:0001b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱化眾生而不取相。",
        "from": "X63n1217_001:0001b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為自行復能利他。",
        "from": "X63n1217_001:0001b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能莊嚴菩提之道。",
        "from": "X63n1217_001:0001b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀施既爾餘五亦然。",
        "from": "X63n1217_001:0001b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為除妄想修行六度而無所行。",
        "from": "X63n1217_001:0001b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為稱法行。",
        "from": "X63n1217_001:0001b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達磨大師四行觀(終)",
        "from": "X63n1217_001:0001c01_0",
        "context_with_next_sentence": false
    }
]