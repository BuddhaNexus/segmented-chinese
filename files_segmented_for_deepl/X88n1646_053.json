[
    {
        "source_sentence": "居士傳五十三",
        "from": "X88n1646_053:0286b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溫月峰崔應魁蔣虎臣李生傳",
        "from": "X88n1646_053:0286b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溫月峰者逸其名。",
        "from": "X88n1646_053:0286b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不詳其里居。",
        "from": "X88n1646_053:0286b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱於江西宜黃扶笋峰。",
        "from": "X88n1646_053:0286b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不婚娶亦不去髭髮。",
        "from": "X88n1646_053:0286b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幅巾野服。",
        "from": "X88n1646_053:0286b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翛然而已。",
        "from": "X88n1646_053:0286b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平居愛逃禪。",
        "from": "X88n1646_053:0286b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暇則勤種植。",
        "from": "X88n1646_053:0286b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "給衣食稍贏。",
        "from": "X88n1646_053:0286b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輙與人共之。",
        "from": "X88n1646_053:0286b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日行圃間。",
        "from": "X88n1646_053:0286b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方有竊者遽却走。",
        "from": "X88n1646_053:0286b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶行他所。",
        "from": "X88n1646_053:0286b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一傭力作甚苦。",
        "from": "X88n1646_053:0286b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詢之曰無以家也。",
        "from": "X88n1646_053:0286b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃携歸。",
        "from": "X88n1646_053:0286b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試以事輙辦。",
        "from": "X88n1646_053:0286b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月峰喜。",
        "from": "X88n1646_053:0286b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為盡舉。",
        "from": "X88n1646_053:0286b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扶笋聽之。",
        "from": "X88n1646_053:0286b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而傭頗驕欲。",
        "from": "X88n1646_053:0286b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂據扶笋月峰覺之為好語謝曰。",
        "from": "X88n1646_053:0286b12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扶笋子有也。",
        "from": "X88n1646_053:0286b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予無事焉。",
        "from": "X88n1646_053:0286b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "挈斗米鐮鋤瓦釜各一具擔而去。",
        "from": "X88n1646_053:0286b13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去峰五里許。",
        "from": "X88n1646_053:0286b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度阻峻處。",
        "from": "X88n1646_053:0286b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穴而居。",
        "from": "X88n1646_053:0286b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂松葉自蔽。",
        "from": "X88n1646_053:0286b14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出種植如故。",
        "from": "X88n1646_053:0286b15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中多虎。",
        "from": "X88n1646_053:0286b15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月峰豕畜之。",
        "from": "X88n1646_053:0286b15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以為規。",
        "from": "X88n1646_053:0286b15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微笑曰。",
        "from": "X88n1646_053:0286b16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是身其吾有哉。",
        "from": "X88n1646_053:0286b16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藝圃次。",
        "from": "X88n1646_053:0286b16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有虎薄而睨之。",
        "from": "X88n1646_053:0286b16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月峰拱語曰。",
        "from": "X88n1646_053:0286b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子欲之乎。",
        "from": "X88n1646_053:0286b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今飼汝。",
        "from": "X88n1646_053:0286b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即解衣就虎。",
        "from": "X88n1646_053:0286b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎伏不動。",
        "from": "X88n1646_053:0286b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則又曰。",
        "from": "X88n1646_053:0286b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若念我無侶乎。",
        "from": "X88n1646_053:0286b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我點頭三。",
        "from": "X88n1646_053:0286b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與若為友。",
        "from": "X88n1646_053:0286b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎點頭者三。",
        "from": "X88n1646_053:0286b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自是月峰出入常與虎偕。",
        "from": "X88n1646_053:0286b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其寢也以茅偃地席其上。",
        "from": "X88n1646_053:0286b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或發視之。",
        "from": "X88n1646_053:0286b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有蟒盤焉。",
        "from": "X88n1646_053:0286b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無害也。",
        "from": "X88n1646_053:0286b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇禎初卒。",
        "from": "X88n1646_053:0286b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年八十餘。",
        "from": "X88n1646_053:0286b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞著書論性學甚具。",
        "from": "X88n1646_053:0286b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既沒而其書不傳(懸榻編)。",
        "from": "X88n1646_053:0286b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崔應魁北京永平人。",
        "from": "X88n1646_053:0286b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少為醫。",
        "from": "X88n1646_053:0286b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人以疾請者。",
        "from": "X88n1646_053:0286b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不論直皆為之盡。",
        "from": "X88n1646_053:0286b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚歲學佛法。",
        "from": "X88n1646_053:0286b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下上盤山。",
        "from": "X88n1646_053:0286b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八年參諸老宿有省。",
        "from": "X88n1646_053:0286b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康熈二十七年秋示微疾。",
        "from": "X88n1646_053:0286c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧告常所往來者為期訣別。",
        "from": "X88n1646_053:0286c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至期。",
        "from": "X88n1646_053:0286c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾至。",
        "from": "X88n1646_053:0286c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "環坐談笑如平日。",
        "from": "X88n1646_053:0286c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之乃曰。",
        "from": "X88n1646_053:0286c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬事無常。",
        "from": "X88n1646_053:0286c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百年有限。",
        "from": "X88n1646_053:0286c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依我行之。",
        "from": "X88n1646_053:0286c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決不相誤。",
        "from": "X88n1646_053:0286c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "索筆書偈而逝。",
        "from": "X88n1646_053:0286c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其偈曰。",
        "from": "X88n1646_053:0286c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來去赤條條。",
        "from": "X88n1646_053:0286c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不挂一絲毫。",
        "from": "X88n1646_053:0286c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來無一物。",
        "from": "X88n1646_053:0286c04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱橫任逍遙(盤山志)。",
        "from": "X88n1646_053:0286c04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔣虎臣名超。",
        "from": "X88n1646_053:0286c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金壇人。",
        "from": "X88n1646_053:0286c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順治四年進士。",
        "from": "X88n1646_053:0286c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官翰林院修撰。",
        "from": "X88n1646_053:0286c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以文章自名。",
        "from": "X88n1646_053:0286c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性寬厚好施。",
        "from": "X88n1646_053:0286c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以德報怨。",
        "from": "X88n1646_053:0286c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "督順天學政。",
        "from": "X88n1646_053:0286c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持守清慎。",
        "from": "X88n1646_053:0286c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每舉債以賑貧士。",
        "from": "X88n1646_053:0286c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疏請復古學。",
        "from": "X88n1646_053:0286c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禁天下有司刑責諸生。",
        "from": "X88n1646_053:0286c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士林頌之。",
        "from": "X88n1646_053:0286c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎臣少時屢夢身為比邱。",
        "from": "X88n1646_053:0286c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十五。",
        "from": "X88n1646_053:0286c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二道人坐其門言。",
        "from": "X88n1646_053:0286c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎臣有師在峨眉。",
        "from": "X88n1646_053:0286c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎毋忘宿因。",
        "from": "X88n1646_053:0286c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他日當相見也。",
        "from": "X88n1646_053:0286c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居常斷葷肉。",
        "from": "X88n1646_053:0286c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜方外交。",
        "from": "X88n1646_053:0286c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居京師時參大博和尚。",
        "from": "X88n1646_053:0286c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日入朝聞喝道聲。",
        "from": "X88n1646_053:0286c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁然有省。",
        "from": "X88n1646_053:0286c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣大博呈解。",
        "from": "X88n1646_053:0286c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大博徵詰再三。",
        "from": "X88n1646_053:0286c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃可之。",
        "from": "X88n1646_053:0286c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及督學任滿。",
        "from": "X88n1646_053:0286c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃告歸。",
        "from": "X88n1646_053:0286c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過百泉謁孫鍾元。",
        "from": "X88n1646_053:0286c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語數日。",
        "from": "X88n1646_053:0286c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去之匡廬。",
        "from": "X88n1646_053:0286c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊鹿門。",
        "from": "X88n1646_053:0286c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂直達峨眉。",
        "from": "X88n1646_053:0286c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居伏虎寺。",
        "from": "X88n1646_053:0286c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之有司請修峨眉志。",
        "from": "X88n1646_053:0286c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃一至成都。",
        "from": "X88n1646_053:0286c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而得疾。",
        "from": "X88n1646_053:0286c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺書別當事。",
        "from": "X88n1646_053:0286c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沐浴端坐吟詩而逝。",
        "from": "X88n1646_053:0286c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翼日有胡生者。",
        "from": "X88n1646_053:0286c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇諸山椒頻呼蔣先生不應。",
        "from": "X88n1646_053:0286c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及入寺。",
        "from": "X88n1646_053:0286c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知虎臣已死。",
        "from": "X88n1646_053:0286c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃大驚(磐山志．施愚山集)。",
        "from": "X88n1646_053:0286c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李生江西人。",
        "from": "X88n1646_053:0286c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知其名字。",
        "from": "X88n1646_053:0286c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來江漢間三十年。",
        "from": "X88n1646_053:0286c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常如五十許人。",
        "from": "X88n1646_053:0286c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一瓢自隨。",
        "from": "X88n1646_053:0286c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊行肆上。",
        "from": "X88n1646_053:0286c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞牛肉彘膏。",
        "from": "X88n1646_053:0286c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啖之有餘納諸敗襖中。",
        "from": "X88n1646_053:0286c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方暑色味不變。",
        "from": "X88n1646_053:0286c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇紙筆即書。",
        "from": "X88n1646_053:0286c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不盡可曉。",
        "from": "X88n1646_053:0286c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或襍一二字如符篆。",
        "from": "X88n1646_053:0286c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人與之言不答。",
        "from": "X88n1646_053:0286c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有府丞者異其人。",
        "from": "X88n1646_053:0286c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邀至官舍。",
        "from": "X88n1646_053:0286c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留數日辭去。",
        "from": "X88n1646_053:0286c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "府丞與以葛衣文舄為插花滿頭。",
        "from": "X88n1646_053:0286c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徜徉過市。",
        "from": "X88n1646_053:0286c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "市兒競奪之。",
        "from": "X88n1646_053:0286c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒抱頭不與。",
        "from": "X88n1646_053:0286c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而葛敝縷縷。",
        "from": "X88n1646_053:0286c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風雪中自若也。",
        "from": "X88n1646_053:0287a01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康熙中遂安毛際可遊漢上。",
        "from": "X88n1646_053:0287a01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與生遇於旅館。",
        "from": "X88n1646_053:0287a02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生為書扇頭詩數首。",
        "from": "X88n1646_053:0287a02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆可讀。",
        "from": "X88n1646_053:0287a02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "際可錄而傳之。",
        "from": "X88n1646_053:0287a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詩曰。",
        "from": "X88n1646_053:0287a03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲有深山鶴有林。",
        "from": "X88n1646_053:0287a03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離當處了禪心。",
        "from": "X88n1646_053:0287a03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜來月照長廊下。",
        "from": "X88n1646_053:0287a04_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句彌陀劫外音。",
        "from": "X88n1646_053:0287a04_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_053:0287a04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明暗全捐正眼開。",
        "from": "X88n1646_053:0287a04_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一枝秀出一如來。",
        "from": "X88n1646_053:0287a05_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫到此皆成聖。",
        "from": "X88n1646_053:0287a05_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拍手相逢一笑回。",
        "from": "X88n1646_053:0287a05_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_053:0287a06_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漫去千峯與萬峯。",
        "from": "X88n1646_053:0287a06_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重重無盡又重重。",
        "from": "X88n1646_053:0287a06_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何如高臥家山裏。",
        "from": "X88n1646_053:0287a07_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前有幽篁後有松。",
        "from": "X88n1646_053:0287a07_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_053:0287a07_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山色溪光明祖意。",
        "from": "X88n1646_053:0287a07_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳥啼花笑悟機緣。",
        "from": "X88n1646_053:0287a08_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有時獨坐臺盤上。",
        "from": "X88n1646_053:0287a08_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "午夜無雲月一天。",
        "from": "X88n1646_053:0287a08_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_053:0287a09_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道有道無俱漫語。",
        "from": "X88n1646_053:0287a09_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是淨是禪總強名。",
        "from": "X88n1646_053:0287a09_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昧却本來咬枯骨。",
        "from": "X88n1646_053:0287a10_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溺沈苦海不知春。",
        "from": "X88n1646_053:0287a10_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_053:0287a10_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道行孤高化有緣。",
        "from": "X88n1646_053:0287a10_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降龍伏虎自安然。",
        "from": "X88n1646_053:0287a11_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於今喜得真三昧。",
        "from": "X88n1646_053:0287a11_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月落風廻綠樹邊。",
        "from": "X88n1646_053:0287a11_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_053:0287a12_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州布衫重七斤。",
        "from": "X88n1646_053:0287a12_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失處分明得處真。",
        "from": "X88n1646_053:0287a12_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山河大地都盖却。",
        "from": "X88n1646_053:0287a13_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰是當機截斷人。",
        "from": "X88n1646_053:0287a13_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_053:0287a13_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千崖雨濕松添老。",
        "from": "X88n1646_053:0287a13_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一味秋聲菊轉新。",
        "from": "X88n1646_053:0287a14_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫謂山中無甲子。",
        "from": "X88n1646_053:0287a14_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數珠粒粒紀時辰。",
        "from": "X88n1646_053:0287a14_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時又有洞庭生者。",
        "from": "X88n1646_053:0287a15_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞食洞庭山中。",
        "from": "X88n1646_053:0287a15_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀類狂者。",
        "from": "X88n1646_053:0287a15_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜則臥寺廡下。",
        "from": "X88n1646_053:0287a16_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺僧驅之。",
        "from": "X88n1646_053:0287a16_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而復來。",
        "from": "X88n1646_053:0287a16_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞題詩壁上云。",
        "from": "X88n1646_053:0287a16_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信乾坤大。",
        "from": "X88n1646_053:0287a17_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超然世莫羣。",
        "from": "X88n1646_053:0287a17_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口吞三峽水。",
        "from": "X88n1646_053:0287a17_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脚踏萬方雲。",
        "from": "X88n1646_053:0287a17_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "X88n1646_053:0287a18_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有形總是假。",
        "from": "X88n1646_053:0287a18_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無象孰為真。",
        "from": "X88n1646_053:0287a18_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟到無生地。",
        "from": "X88n1646_053:0287a18_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梅花滿四隣。",
        "from": "X88n1646_053:0287a18_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又除夕詩云。",
        "from": "X88n1646_053:0287a19_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈火輝煌慶此宵。",
        "from": "X88n1646_053:0287a19_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜深兒女不相招。",
        "from": "X88n1646_053:0287a19_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破蒲團上三更夜。",
        "from": "X88n1646_053:0287a20_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那管明朝是歲朝。",
        "from": "X88n1646_053:0287a20_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長洲汪琬錄傳之。",
        "from": "X88n1646_053:0287a20_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二生者其後皆不知所終(安序堂集．池北偶談)。",
        "from": "X88n1646_053:0287a21_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_053:0287a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀溫李諸君子行履。",
        "from": "X88n1646_053:0287a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "類古所稱沉冥者。",
        "from": "X88n1646_053:0287a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "味其言。",
        "from": "X88n1646_053:0287a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殆寒山拾得之亞。",
        "from": "X88n1646_053:0287a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與蔣先生之趣遠矣。",
        "from": "X88n1646_053:0287a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宰官耶。",
        "from": "X88n1646_053:0287a23_6",
        "context_with_next_sentence": false
    }
]