[
    {
        "source_sentence": "佛說妙色陀羅尼經",
        "from": "T21n1386_001:0905c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1386_001:0905c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1386_001:0905c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告阿難言。",
        "from": "T21n1386_001:0905c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有陀羅尼名曰妙色。",
        "from": "T21n1386_001:0905c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是三世諸佛同共宣說能與眾生作大利益。",
        "from": "T21n1386_001:0905c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人聞是陀羅尼。",
        "from": "T21n1386_001:0905c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生難遭想發勇猛心。",
        "from": "T21n1386_001:0905c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦受持供養恭敬。",
        "from": "T21n1386_001:0905c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人理世獲大福聚。",
        "from": "T21n1386_001:0905c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜安隱。",
        "from": "T21n1386_001:0905c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復有人以大悲心。",
        "from": "T21n1386_001:0905c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於寂靜處持種種飲食而為出生。",
        "from": "T21n1386_001:0905c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼七遍。",
        "from": "T21n1386_001:0905c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持已作如是言。",
        "from": "T21n1386_001:0905c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今出生祭於世間一切惡趣諸鬼。",
        "from": "T21n1386_001:0905c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願食此生者速離惡趣。",
        "from": "T21n1386_001:0905c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是言時即三彈指。",
        "from": "T21n1386_001:0905c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想彼諸鬼得此食者各各飽滿。",
        "from": "T21n1386_001:0905c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變妙色身發菩提心。",
        "from": "T21n1386_001:0905c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至當來漸成佛果。",
        "from": "T21n1386_001:0906a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1386_001:0906a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨(引)婆誐嚩帝(引一句)蘇嚕播(引)野(二)怛他(引)誐多(引)野(三)阿囉曷(二合)帝(引)三藐訖三(二合)沒馱(引)野(四)怛[寧*也](切身)他(引五)唵(引)蘇嚕蘇嚕(六)鉢囉(二合)蘇嚕鉢囉(二合)蘇嚕(七)三摩(二合)囉三摩(二合)囉(八)婆囉婆囉(九)三婆囉三婆囉(十)薩哩嚩(二合)必隷(二合引)多必舍(引)左(引)曩(引十一)阿(引)賀(引)囕捺那(引)彌娑嚩(二合引)賀(引十二)爾時阿難聞佛說已。",
        "from": "T21n1386_001:0906a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜信受作禮而退。",
        "from": "T21n1386_001:0906a09_1",
