[
    {
        "source_sentence": "御製序",
        "from": "X68n1319_009:0532a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪竇徧參諸方。",
        "from": "X68n1319_009:0532a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機辯無敵。",
        "from": "X68n1319_009:0532a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽遇智門。",
        "from": "X68n1319_009:0532a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩度拂子驀口打。",
        "from": "X68n1319_009:0532a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁然開悟。",
        "from": "X68n1319_009:0532a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃嗣智門。",
        "from": "X68n1319_009:0532a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者於此薦得。",
        "from": "X68n1319_009:0532a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知心不在思維。",
        "from": "X68n1319_009:0532a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而普照法界。",
        "from": "X68n1319_009:0532a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口不必語言。",
        "from": "X68n1319_009:0532a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而遍演恒沙。",
        "from": "X68n1319_009:0532a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雪竇云。",
        "from": "X68n1319_009:0532a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直饒乾坤大地草木叢林盡為衲僧。",
        "from": "X68n1319_009:0532a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異口同聲。",
        "from": "X68n1319_009:0532a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各置百千問難。",
        "from": "X68n1319_009:0532a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "也不消長老一彈指。",
        "from": "X68n1319_009:0532a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便乃高低普應。",
        "from": "X68n1319_009:0532a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後無差也。",
        "from": "X68n1319_009:0532a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然一彈指中隨緣自結。",
        "from": "X68n1319_009:0532a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如三十三天共食寶器。",
        "from": "X68n1319_009:0532a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其福德而飯色不同。",
        "from": "X68n1319_009:0532a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "X68n1319_009:0532a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切賢聖皆以無為法而有差別。",
        "from": "X68n1319_009:0532a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一彈指尚且如是。",
        "from": "X68n1319_009:0532a24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況乃有答有問。",
        "from": "X68n1319_009:0532a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有字有文。",
        "from": "X68n1319_009:0532b01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈得顢頇渾同。",
        "from": "X68n1319_009:0532b01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無復選擇。",
        "from": "X68n1319_009:0532b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔年雪竇眉毛拖地。",
        "from": "X68n1319_009:0532b01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留此葛藤。",
        "from": "X68n1319_009:0532b02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日圓明解髻探珠。",
        "from": "X68n1319_009:0532b02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇足一上。",
        "from": "X68n1319_009:0532b02_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茲編也。",
        "from": "X68n1319_009:0532b02_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是第一義諦最上宗乘。",
        "from": "X68n1319_009:0532b03_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者不假外求。",
        "from": "X68n1319_009:0532b03_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直下自證。",
        "from": "X68n1319_009:0532b03_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不離此言句。",
        "from": "X68n1319_009:0532b04_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而皆有從凡入聖之機。",
        "from": "X68n1319_009:0532b04_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如以火銷冰。",
        "from": "X68n1319_009:0532b04_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冰釋於水。",
        "from": "X68n1319_009:0532b05_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水冰一味。",
        "from": "X68n1319_009:0532b05_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得無所得。",
        "from": "X68n1319_009:0532b05_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火水殊途。",
        "from": "X68n1319_009:0532b05_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有何交涉。",
        "from": "X68n1319_009:0532b05_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然而火力銷冰。",
        "from": "X68n1319_009:0532b06_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其功曷可誣歟。",
        "from": "X68n1319_009:0532b06_45",
        "context_with_next_sentence": false
    }
]