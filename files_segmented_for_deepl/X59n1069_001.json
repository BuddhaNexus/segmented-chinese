[
    {
        "source_sentence": "釋迦牟尼如來㧞除苦惱現大神變飛空大鉢法三藏法師　般若　傳一時釋迦尊住雪山頂。",
        "from": "X59n1069_001:0171b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五百比丘。",
        "from": "X59n1069_001:0171b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□萬菩薩。",
        "from": "X59n1069_001:0171b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍八部。",
        "from": "X59n1069_001:0171b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量大眾。",
        "from": "X59n1069_001:0171b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱會聞法。",
        "from": "X59n1069_001:0171b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時眾疲勞。",
        "from": "X59n1069_001:0171b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食難得。",
        "from": "X59n1069_001:0171b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊入大慈三昧。",
        "from": "X59n1069_001:0171b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於光明中。",
        "from": "X59n1069_001:0171b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涌出如來之大鉢。",
        "from": "X59n1069_001:0171b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘空而去。",
        "from": "X59n1069_001:0171b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知去所。",
        "from": "X59n1069_001:0171b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾驚疑振。",
        "from": "X59n1069_001:0171b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時佛大鉢還來。",
        "from": "X59n1069_001:0171b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飯滿鉢中。",
        "from": "X59n1069_001:0171b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來從定而起。",
        "from": "X59n1069_001:0171b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告大眾言。",
        "from": "X59n1069_001:0171b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等皆當食之。",
        "from": "X59n1069_001:0171b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此語已。",
        "from": "X59n1069_001:0171b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾歡喜。",
        "from": "X59n1069_001:0171b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食此鉢飯。",
        "from": "X59n1069_001:0171b14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶餘無盡。",
        "from": "X59n1069_001:0171b14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其香遍滿三千大千世界。",
        "from": "X59n1069_001:0171b14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄餓鬼畜生皆得飽滿。",
        "from": "X59n1069_001:0171b15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是文殊師利。",
        "from": "X59n1069_001:0171b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言。",
        "from": "X59n1069_001:0171b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來以何神力。",
        "from": "X59n1069_001:0171b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛是大鉢。",
        "from": "X59n1069_001:0171b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令飽滿大眾。",
        "from": "X59n1069_001:0171b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及濟三途八難眾生之苦。",
        "from": "X59n1069_001:0171b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等及未來世求法修道者。",
        "from": "X59n1069_001:0171b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何習是法。",
        "from": "X59n1069_001:0171b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成能佛事。",
        "from": "X59n1069_001:0171b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可利眾生。",
        "from": "X59n1069_001:0171b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願大聖說是法要。",
        "from": "X59n1069_001:0171b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛事告文殊師利。",
        "from": "X59n1069_001:0171b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此如是。",
        "from": "X59n1069_001:0171b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "X59n1069_001:0171b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當演說其法。",
        "from": "X59n1069_001:0171b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益眾生。",
        "from": "X59n1069_001:0171b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饒益行者。",
        "from": "X59n1069_001:0171b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昔作大仙人。",
        "from": "X59n1069_001:0171b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於雪山巖中。",
        "from": "X59n1069_001:0171b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久斷衣食。",
        "from": "X59n1069_001:0171b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無由得之。",
        "from": "X59n1069_001:0171b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有弟子一萬人。",
        "from": "X59n1069_001:0171b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱住苦行。",
        "from": "X59n1069_001:0171b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一迦樓羅王。",
        "from": "X59n1069_001:0171b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來白我言。",
        "from": "X59n1069_001:0171b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願持大仙御鉢。",
        "from": "X59n1069_001:0171b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往於天上及人間。",
        "from": "X59n1069_001:0171b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛滿衣食。",
        "from": "X59n1069_001:0171b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還來供養大眾。",
        "from": "X59n1069_001:0171b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時我仙許之。",
        "from": "X59n1069_001:0171b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時迦樓羅王戴鉢。",
        "from": "X59n1069_001:0171b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛走大千世界。",
        "from": "X59n1069_001:0171b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時之間。",
        "from": "X59n1069_001:0171b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿鉢衣飯還來。",
        "from": "X59n1069_001:0171c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾隨喜。",
        "from": "X59n1069_001:0171c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得安隱。",
        "from": "X59n1069_001:0171c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可知時仙人者。",
        "from": "X59n1069_001:0171c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今我身是也。",
        "from": "X59n1069_001:0171c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當說其法。",
        "from": "X59n1069_001:0171c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先撰清淨處無人深山幽林高巖中。",
        "from": "X59n1069_001:0171c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大河大海清泉之邊。",
        "from": "X59n1069_001:0171c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷食練行。",
        "from": "X59n1069_001:0171c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服五葉松葉。",
        "from": "X59n1069_001:0171c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菓食。",
        "from": "X59n1069_001:0171c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦如來大鉢真言。",
        "from": "X59n1069_001:0171c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及結其印。",
        "from": "X59n1069_001:0171c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜六時。",
        "from": "X59n1069_001:0171c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得絕聲。",
        "from": "X59n1069_001:0171c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未至三日。",
        "from": "X59n1069_001:0171c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得成就　印相。",
        "from": "X59n1069_001:0171c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以右手當心仰掌。",
        "from": "X59n1069_001:0171c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以左手掌覆。",
        "from": "X59n1069_001:0171c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令右掌上其左。",
        "from": "X59n1069_001:0171c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當小指頭。",
        "from": "X59n1069_001:0171c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與右大指頭相柱。",
        "from": "X59n1069_001:0171c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其左大指頭與右小指頭相柱。",
        "from": "X59n1069_001:0171c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰。",
        "from": "X59n1069_001:0171c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多勃駄南唵路迦播羅地瑟恥多駄羅野駄羅野摩訶皤(去)傳勃駄幡怛羅(二合)娑婆訶當誦是呪。",
        "from": "X59n1069_001:0171c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿百萬遍。",
        "from": "X59n1069_001:0171c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法印呪。",
        "from": "X59n1069_001:0171c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其大精進。",
        "from": "X59n1069_001:0171c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為一切如來神力。",
        "from": "X59n1069_001:0171c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而加護之。",
        "from": "X59n1069_001:0171c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當結是印。",
        "from": "X59n1069_001:0171c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并誦此呪。",
        "from": "X59n1069_001:0171c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得成就。",
        "from": "X59n1069_001:0171c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若地獄餓鬼有情。",
        "from": "X59n1069_001:0171c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿百八遍。",
        "from": "X59n1069_001:0171c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則得地獄餓鬼。",
        "from": "X59n1069_001:0171c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飽滿諸食。",
        "from": "X59n1069_001:0171c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若曠野行亦結此印。",
        "from": "X59n1069_001:0171c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并誦此呪者。",
        "from": "X59n1069_001:0171c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曠野鬼神不相嬈也。",
        "from": "X59n1069_001:0171c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故其鉢隨心飛行十方。",
        "from": "X59n1069_001:0171c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持是法時。",
        "from": "X59n1069_001:0171c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當呼速疾迦樓羅王。",
        "from": "X59n1069_001:0171c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為使者。",
        "from": "X59n1069_001:0171c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來神力故。",
        "from": "X59n1069_001:0171c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼王能隨奉仕。",
        "from": "X59n1069_001:0171c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者知之。",
        "from": "X59n1069_001:0171c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空鉢自轉。",
        "from": "X59n1069_001:0171c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣呪。",
        "from": "X59n1069_001:0171c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "模呼呵梨疑[(止/示)*余]提迷頭迷七佛世尊摩訶毗嵐彼莎呵々々々々々々々々々々々々々々々々々々々莎呵轉鉢呪。",
        "from": "X59n1069_001:0171c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無佛陀耶　南無達磨耶　南無僧伽耶　南無多羅鉢　遮羅陀羅尼轉陀羅尼轉莎呵若作法時。",
        "from": "X59n1069_001:0171c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨治一室。",
        "from": "X59n1069_001:0171c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水灑地。",
        "from": "X59n1069_001:0171c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮四方佛。",
        "from": "X59n1069_001:0171c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喚一童子。",
        "from": "X59n1069_001:0171c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教洗手面。",
        "from": "X59n1069_001:0172a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦遣禮佛。",
        "from": "X59n1069_001:0172a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其地上。",
        "from": "X59n1069_001:0172a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敷一淨氈。",
        "from": "X59n1069_001:0172a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取一鉢。",
        "from": "X59n1069_001:0172a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水淨洗。",
        "from": "X59n1069_001:0172a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於氈。",
        "from": "X59n1069_001:0172a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取淨衣。",
        "from": "X59n1069_001:0172a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛於鉢中。",
        "from": "X59n1069_001:0172a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喚童子。",
        "from": "X59n1069_001:0172a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上以兩膝頭。",
        "from": "X59n1069_001:0172a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案於鉢中。",
        "from": "X59n1069_001:0172a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以兩手把地。",
        "from": "X59n1069_001:0172a03_7",
        "context_with_next_sentence": true
    },
    {
