[
    {
        "source_sentence": "佛祖綱目卷第十三(辰字號)",
        "from": "X85n1594_013:0576c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(周顯王十二年起)辛丑(慎靚王元年)丁未(赧王元年)癸亥(周赧王十七年止)(甲午)十二祖馬鳴傳法迦毗摩羅馬鳴大士。",
        "from": "X85n1594_013:0576c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波羅柰國人。",
        "from": "X85n1594_013:0576c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名功勝。",
        "from": "X85n1594_013:0576c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以有作無作諸功德。",
        "from": "X85n1594_013:0576c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最為殊勝。",
        "from": "X85n1594_013:0576c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名焉。",
        "from": "X85n1594_013:0576c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既受心印於夜奢。",
        "from": "X85n1594_013:0576c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法度人。",
        "from": "X85n1594_013:0576c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧諸異論。",
        "from": "X85n1594_013:0576c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一外道。",
        "from": "X85n1594_013:0576c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來索論義。",
        "from": "X85n1594_013:0576c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集國王大臣及四眾。",
        "from": "X85n1594_013:0576c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱會論場。",
        "from": "X85n1594_013:0576c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴曰。",
        "from": "X85n1594_013:0576c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝義以何為宗。",
        "from": "X85n1594_013:0576c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰凡有言說。",
        "from": "X85n1594_013:0576c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆能破。",
        "from": "X85n1594_013:0576c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴乃指國王曰。",
        "from": "X85n1594_013:0576c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當今國土康寧。",
        "from": "X85n1594_013:0576c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王長壽。",
        "from": "X85n1594_013:0576c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請汝破之。",
        "from": "X85n1594_013:0576c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道屈服。",
        "from": "X85n1594_013:0577a01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於華氏國。",
        "from": "X85n1594_013:0577a01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉妙法輪。",
        "from": "X85n1594_013:0577a01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有老人。",
        "from": "X85n1594_013:0577a01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座前仆地。",
        "from": "X85n1594_013:0577a01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴謂眾曰。",
        "from": "X85n1594_013:0577a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非庸流。",
        "from": "X85n1594_013:0577a02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當有異相。",
        "from": "X85n1594_013:0577a02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖不見。",
        "from": "X85n1594_013:0577a02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄從地湧出一金色人。",
        "from": "X85n1594_013:0577a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復化為女子。",
        "from": "X85n1594_013:0577a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手指馬鳴而說偈曰。",
        "from": "X85n1594_013:0577a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首長老尊。",
        "from": "X85n1594_013:0577a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當受如來記。",
        "from": "X85n1594_013:0577a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於此地上。",
        "from": "X85n1594_013:0577a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣通第一義。",
        "from": "X85n1594_013:0577a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說偈已。",
        "from": "X85n1594_013:0577a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞥然不見。",
        "from": "X85n1594_013:0577a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴曰。",
        "from": "X85n1594_013:0577a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將有魔來。",
        "from": "X85n1594_013:0577a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與吾較力。",
        "from": "X85n1594_013:0577a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有頃風雨暴至。",
        "from": "X85n1594_013:0577a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天地晦冥。",
        "from": "X85n1594_013:0577a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴曰。",
        "from": "X85n1594_013:0577a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔之來信矣。",
        "from": "X85n1594_013:0577a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當除之。",
        "from": "X85n1594_013:0577a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即指空中。",
        "from": "X85n1594_013:0577a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現一大金龍。",
        "from": "X85n1594_013:0577a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奮發威神。",
        "from": "X85n1594_013:0577a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震動山岳。",
        "from": "X85n1594_013:0577a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴儼然於座。",
        "from": "X85n1594_013:0577a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔事隨滅。",
        "from": "X85n1594_013:0577a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經七日有一小蟲。",
        "from": "X85n1594_013:0577a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大若蟭螟。",
        "from": "X85n1594_013:0577a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潛形座下。",
        "from": "X85n1594_013:0577a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴以手取之。",
        "from": "X85n1594_013:0577a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示眾曰。",
        "from": "X85n1594_013:0577a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯乃魔之所變。",
        "from": "X85n1594_013:0577a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盜聽吾法耳。",
        "from": "X85n1594_013:0577a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃放之令去。",
        "from": "X85n1594_013:0577a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔不能動。",
        "from": "X85n1594_013:0577a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴告之曰。",
        "from": "X85n1594_013:0577a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝但皈依三寶。",
        "from": "X85n1594_013:0577a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得神通。",
        "from": "X85n1594_013:0577a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂復本形。",
        "from": "X85n1594_013:0577a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮懺悔。",
        "from": "X85n1594_013:0577a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴問曰。",
        "from": "X85n1594_013:0577a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝名誰耶。",
        "from": "X85n1594_013:0577a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眷屬多少。",
        "from": "X85n1594_013:0577a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰我名迦毗摩羅。",
        "from": "X85n1594_013:0577a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三千眷屬。",
        "from": "X85n1594_013:0577a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴曰。",
        "from": "X85n1594_013:0577a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡汝神力變化若何。",
        "from": "X85n1594_013:0577a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰我化巨海。",
        "from": "X85n1594_013:0577a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極為小事。",
        "from": "X85n1594_013:0577a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴曰。",
        "from": "X85n1594_013:0577a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝化性海得否。",
        "from": "X85n1594_013:0577a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰何謂性海。",
        "from": "X85n1594_013:0577a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我未甞知。",
        "from": "X85n1594_013:0577a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴即為說性海曰。",
        "from": "X85n1594_013:0577a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山河大地。",
        "from": "X85n1594_013:0577a15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆依建立。",
        "from": "X85n1594_013:0577a15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧六通。",
        "from": "X85n1594_013:0577a15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繇茲發現。",
        "from": "X85n1594_013:0577a15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦毗摩羅聞言。",
        "from": "X85n1594_013:0577a16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂發信心。",
        "from": "X85n1594_013:0577a16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與徒眾三千。",
        "from": "X85n1594_013:0577a16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱求剃度。",
        "from": "X85n1594_013:0577a16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴乃召五百羅漢與授具戒。",
        "from": "X85n1594_013:0577a17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告之曰。",
        "from": "X85n1594_013:0577a17_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大法眼藏。",
        "from": "X85n1594_013:0577a17_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當付汝。",
        "from": "X85n1594_013:0577a18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝聽偈言。",
        "from": "X85n1594_013:0577a18_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱顯即本法。",
        "from": "X85n1594_013:0577a18_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明暗元不二。",
        "from": "X85n1594_013:0577a18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今付悟了法。",
        "from": "X85n1594_013:0577a19_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非取亦非離。",
        "from": "X85n1594_013:0577a19_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑已。",
        "from": "X85n1594_013:0577a19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入龍奮迅三昧。",
        "from": "X85n1594_013:0577a19_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "挺身空中。",
        "from": "X85n1594_013:0577a20_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日輪相。",
        "from": "X85n1594_013:0577a20_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後示滅。",
        "from": "X85n1594_013:0577a20_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾藏真體於龍龕時周顯王四十七年甲午也。",
        "from": "X85n1594_013:0577a20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴造甘蔗論十萬偈。",
        "from": "X85n1594_013:0577a21_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又造起信等論。",
        "from": "X85n1594_013:0577a22_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能開誘。",
        "from": "X85n1594_013:0577a22_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度人無量。",
        "from": "X85n1594_013:0577a22_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第十三",
        "from": "X85n1594_013:0577a24_0",
        "context_with_next_sentence": false
    }
]