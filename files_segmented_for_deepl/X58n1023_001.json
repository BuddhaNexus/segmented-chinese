[
    {
        "source_sentence": "華嚴大意",
        "from": "X58n1023_001:0623c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇明　古庭善堅　撰",
        "from": "X58n1023_001:0623c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴之說。",
        "from": "X58n1023_001:0623c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其義也大。",
        "from": "X58n1023_001:0623c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文也長。",
        "from": "X58n1023_001:0623c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非盡得其玅者。",
        "from": "X58n1023_001:0623c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難以筆舌。",
        "from": "X58n1023_001:0623c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毗盧老人。",
        "from": "X58n1023_001:0623c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一真三昧。",
        "from": "X58n1023_001:0623c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于當人分上最真最切。",
        "from": "X58n1023_001:0623c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開口也說著。",
        "from": "X58n1023_001:0623c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不開口也說著。",
        "from": "X58n1023_001:0623c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開口不開口總說著。",
        "from": "X58n1023_001:0623c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛法。",
        "from": "X58n1023_001:0623c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切玄玅。",
        "from": "X58n1023_001:0623c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切機用。",
        "from": "X58n1023_001:0623c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切拈提。",
        "from": "X58n1023_001:0623c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切棒喝。",
        "from": "X58n1023_001:0623c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切語言。",
        "from": "X58n1023_001:0623c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切文字。",
        "from": "X58n1023_001:0623c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切三昧。",
        "from": "X58n1023_001:0623c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用則總用。",
        "from": "X58n1023_001:0623c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用則總不用。",
        "from": "X58n1023_001:0623c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用與不用。",
        "from": "X58n1023_001:0623c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總不相礙。",
        "from": "X58n1023_001:0623c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊陞座。",
        "from": "X58n1023_001:0623c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊白槌云。",
        "from": "X58n1023_001:0623c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀法王法。",
        "from": "X58n1023_001:0623c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法王法如是。",
        "from": "X58n1023_001:0623c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊便下座。",
        "from": "X58n1023_001:0623c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊便是開口用處。",
        "from": "X58n1023_001:0623c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊便下座是不開口用處。",
        "from": "X58n1023_001:0623c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到這裏世尊說箇什麼。",
        "from": "X58n1023_001:0623c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若道有說。",
        "from": "X58n1023_001:0623c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊早自錯了。",
        "from": "X58n1023_001:0623c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若道無說。",
        "from": "X58n1023_001:0623c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊陞座。",
        "from": "X58n1023_001:0623c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又自錯了。",
        "from": "X58n1023_001:0623c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若論華藏大意。",
        "from": "X58n1023_001:0623c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說與未說。",
        "from": "X58n1023_001:0623c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錯與未錯。",
        "from": "X58n1023_001:0623c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開口不開口。",
        "from": "X58n1023_001:0623c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉目之間。",
        "from": "X58n1023_001:0623c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一點瞞人不得。",
        "from": "X58n1023_001:0623c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如趙州問投子。",
        "from": "X58n1023_001:0623c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大死的人却活時如何。",
        "from": "X58n1023_001:0623c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子云。",
        "from": "X58n1023_001:0623c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許夜行。",
        "from": "X58n1023_001:0623c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投明早到。",
        "from": "X58n1023_001:0623c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似此一問一答。",
        "from": "X58n1023_001:0623c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如常人說話。",
        "from": "X58n1023_001:0623c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不曾作機會。",
        "from": "X58n1023_001:0623c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不曾作禪道佛法會。",
        "from": "X58n1023_001:0623c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾之江南。",
        "from": "X58n1023_001:0623c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之湖北。",
        "from": "X58n1023_001:0623c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾之天上。",
        "from": "X58n1023_001:0623c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之人間。",
        "from": "X58n1023_001:0623c22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方八面。",
        "from": "X58n1023_001:0623c22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不相應。",
        "from": "X58n1023_001:0623c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不到與麼田地。",
        "from": "X58n1023_001:0623c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱將一大藏教一口吐出。",
        "from": "X58n1023_001:0623c23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堆山塞海。",
        "from": "X58n1023_001:0623c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總無用處。",
        "from": "X58n1023_001:0623c24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊未陞座。",
        "from": "X58n1023_001:0623c24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊未白槌。",
        "from": "X58n1023_001:0623c24_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州投子未相見。",
        "from": "X58n1023_001:0624a01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已將全機交付了。",
        "from": "X58n1023_001:0624a01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡華嚴法界香水海一切諸佛諸善知識。",
        "from": "X58n1023_001:0624a01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却無措手脚處。",
        "from": "X58n1023_001:0624a02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X58n1023_001:0624a02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來深境界。",
        "from": "X58n1023_001:0624a02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其量等虗空。",
        "from": "X58n1023_001:0624a03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生入。",
        "from": "X58n1023_001:0624a03_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而實無所入。",
        "from": "X58n1023_001:0624a03_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既無所入。",
        "from": "X58n1023_001:0624a03_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安有所說。",
        "from": "X58n1023_001:0624a04_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此外不可為儞別加方便。",
        "from": "X58n1023_001:0624a04_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古人云。",
        "from": "X58n1023_001:0624a04_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參須實參。",
        "from": "X58n1023_001:0624a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟須實悟。",
        "from": "X58n1023_001:0624a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如懶融未見四祖。",
        "from": "X58n1023_001:0624a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬祖未見南嶽。",
        "from": "X58n1023_001:0624a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他何曾似。",
        "from": "X58n1023_001:0624a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今學者東卜西卜。",
        "from": "X58n1023_001:0624a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "個個死心榻地。",
        "from": "X58n1023_001:0624a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者只知開口處。",
        "from": "X58n1023_001:0624a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將謂容易安身著脚。",
        "from": "X58n1023_001:0624a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知未開口時。",
        "from": "X58n1023_001:0624a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱是佛祖也難近傍。",
        "from": "X58n1023_001:0624a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧問雲門。",
        "from": "X58n1023_001:0624a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是一代時教。",
        "from": "X58n1023_001:0624a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門云。",
        "from": "X58n1023_001:0624a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對一說一。",
        "from": "X58n1023_001:0624a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道與世尊陞座。",
        "from": "X58n1023_001:0624a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊白槌。",
        "from": "X58n1023_001:0624a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "差別多少。",
        "from": "X58n1023_001:0624a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧問趙州。",
        "from": "X58n1023_001:0624a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬法歸一。",
        "from": "X58n1023_001:0624a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一歸何處。",
        "from": "X58n1023_001:0624a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "州云。",
        "from": "X58n1023_001:0624a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我在青州做領布衫重七觔。",
        "from": "X58n1023_001:0624a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這等說話。",
        "from": "X58n1023_001:0624a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後遠近。",
        "from": "X58n1023_001:0624a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宛爾一般。",
        "from": "X58n1023_001:0624a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古人行到說到。",
        "from": "X58n1023_001:0624a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆在大不思議海。",
        "from": "X58n1023_001:0624a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔香嚴和尚。",
        "from": "X58n1023_001:0624a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在溈山。",
        "from": "X58n1023_001:0624a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問一答十。",
        "from": "X58n1023_001:0624a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問十答百。",
        "from": "X58n1023_001:0624a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溈山向真參實悟處。",
        "from": "X58n1023_001:0624a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛與一劄。",
        "from": "X58n1023_001:0624a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴不知所以。",
        "from": "X58n1023_001:0624a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于是入南陽卓菴。",
        "from": "X58n1023_001:0624a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊竹有省。",
        "from": "X58n1023_001:0624a14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後出世曰。",
        "from": "X58n1023_001:0624a14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老僧四十年方打成一片。",
        "from": "X58n1023_001:0624a14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州和尚二十餘年。",
        "from": "X58n1023_001:0624a15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除粥飯屎尿。",
        "from": "X58n1023_001:0624a15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是雜用心處。",
        "from": "X58n1023_001:0624a16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高峯三十年不出死關。",
        "from": "X58n1023_001:0624a16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先師四十年惟一念。",
        "from": "X58n1023_001:0624a16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長慶稜公。",
        "from": "X58n1023_001:0624a17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐破蒲團七箇。",
        "from": "X58n1023_001:0624a17_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧做工夫十三年。",
        "from": "X58n1023_001:0624a17_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身不放倒。",
        "from": "X58n1023_001:0624a18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今年七十餘。",
        "from": "X58n1023_001:0624a18_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶念死生。",
        "from": "X58n1023_001:0624a18_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未敢離于正念。",
        "from": "X58n1023_001:0624a18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古人念念在定。",
        "from": "X58n1023_001:0624a19_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于生死不亂。",
        "from": "X58n1023_001:0624a19_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今人念念在亂。",
        "from": "X58n1023_001:0624a19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于生死不定。",
        "from": "X58n1023_001:0624a19_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者還知正念麼。",
        "from": "X58n1023_001:0624a20_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前所說。",
        "from": "X58n1023_001:0624a20_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃如來深境界是也。",
        "from": "X58n1023_001:0624a20_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧昔年到先師處。",
        "from": "X58n1023_001:0624a21_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徵問到無結角下手處。",
        "from": "X58n1023_001:0624a21_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不免盡力掀倒。",
        "from": "X58n1023_001:0624a21_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先師說箇是字。",
        "from": "X58n1023_001:0624a22_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今勘來多少錯。",
        "from": "X58n1023_001:0624a22_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任緣隨分。",
        "from": "X58n1023_001:0624a22_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且待命根子斷。",
        "from": "X58n1023_001:0624a23_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧每于華嚴留心。",
        "from": "X58n1023_001:0624a23_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據我所見。",
        "from": "X58n1023_001:0624a23_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財參五十三善知識。",
        "from": "X58n1023_001:0624a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗動步。",
        "from": "X58n1023_001:0624a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十三善知識教授善財。",
        "from": "X58n1023_001:0624a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗開口。",
        "from": "X58n1023_001:0624b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我毗盧舍那如來雜華藏海。",
        "from": "X58n1023_001:0624b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一字一句。",
        "from": "X58n1023_001:0624b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切字一切句。",
        "from": "X58n1023_001:0624b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一具足四天下微塵數不可說。",
        "from": "X58n1023_001:0624b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉轉不可說。",
        "from": "X58n1023_001:0624b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一三昧。",
        "from": "X58n1023_001:0624b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一語言。",
        "from": "X58n1023_001:0624b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一香水海。",
        "from": "X58n1023_001:0624b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一輪圍山。",
        "from": "X58n1023_001:0624b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一毗盧華藏。",
        "from": "X58n1023_001:0624b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一彌勒樓閣。",
        "from": "X58n1023_001:0624b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一諸佛菩薩。",
        "from": "X58n1023_001:0624b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一大善知識。",
        "from": "X58n1023_001:0624b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一觀彼所說諸佛華藏。",
        "from": "X58n1023_001:0624b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一語言三昧。",
        "from": "X58n1023_001:0624b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一辨才三昧。",
        "from": "X58n1023_001:0624b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一神通無礙。",
        "from": "X58n1023_001:0624b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛神力莊嚴佛剎微塵數諸佛世界。",
        "from": "X58n1023_001:0624b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一諸佛世尊所演佛剎微塵數三昧門。",
        "from": "X58n1023_001:0624b07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可思議。",
        "from": "X58n1023_001:0624b08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微細微細。",
        "from": "X58n1023_001:0624b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極微細處。",
        "from": "X58n1023_001:0624b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知諸佛菩薩。",
        "from": "X58n1023_001:0624b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及五十三知識所說佛剎微塵數。",
        "from": "X58n1023_001:0624b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛藏海一一三昧。",
        "from": "X58n1023_001:0624b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于我自受用一真三昧。",
        "from": "X58n1023_001:0624b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮那如來。",
        "from": "X58n1023_001:0624b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無增無減。",
        "from": "X58n1023_001:0624b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無彼無此。",
        "from": "X58n1023_001:0624b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴藏海諸佛菩薩。",
        "from": "X58n1023_001:0624b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善知識。",
        "from": "X58n1023_001:0624b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各盡彼神通三昧。",
        "from": "X58n1023_001:0624b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向我遮那諸佛佛剎微塵數。",
        "from": "X58n1023_001:0624b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧大不思議海。",
        "from": "X58n1023_001:0624b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉不可說三昧。",
        "from": "X58n1023_001:0624b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一莊嚴。",
        "from": "X58n1023_001:0624b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一文字。",
        "from": "X58n1023_001:0624b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一摩尼寶光明。",
        "from": "X58n1023_001:0624b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎微塵數寶牀寶座。",
        "from": "X58n1023_001:0624b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶帳寶綱。",
        "from": "X58n1023_001:0624b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶樹寶雲。",
        "from": "X58n1023_001:0624b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶蓮華。",
        "from": "X58n1023_001:0624b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶瓔珞。",
        "from": "X58n1023_001:0624b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎微塵數獅子幢雲。",
        "from": "X58n1023_001:0624b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼幢雲。",
        "from": "X58n1023_001:0624b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈雲燄雲。",
        "from": "X58n1023_001:0624b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華燄雲。",
        "from": "X58n1023_001:0624b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香燄雲。",
        "from": "X58n1023_001:0624b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎微塵數摩尼寶光聚。",
        "from": "X58n1023_001:0624b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎微塵數諸佛變化莊嚴身。",
        "from": "X58n1023_001:0624b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎微塵數國城善知識。",
        "from": "X58n1023_001:0624b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與夫目前山河大地萬象森羅。",
        "from": "X58n1023_001:0624b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種差別聲音。",
        "from": "X58n1023_001:0624b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "差別幻化。",
        "from": "X58n1023_001:0624b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "差別相好。",
        "from": "X58n1023_001:0624b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸大地獄。",
        "from": "X58n1023_001:0624b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八寒八熱。",
        "from": "X58n1023_001:0624b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬死萬生。",
        "from": "X58n1023_001:0624b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼忉利諸天天樂。",
        "from": "X58n1023_001:0624b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一佛剎微塵數不可說。",
        "from": "X58n1023_001:0624b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可說。",
        "from": "X58n1023_001:0624b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉不可說。",
        "from": "X58n1023_001:0624b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉轉不可說。",
        "from": "X58n1023_001:0624b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總是箇華嚴藏海。",
        "from": "X58n1023_001:0624b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一真三昧。",
        "from": "X58n1023_001:0624b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與麼則佛剎微塵數華嚴藏海。",
        "from": "X58n1023_001:0624b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛諸菩薩。",
        "from": "X58n1023_001:0624b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善知識。",
        "from": "X58n1023_001:0624b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天人非人等。",
        "from": "X58n1023_001:0624b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而又一一佛剎微塵數不可說。",
        "from": "X58n1023_001:0624b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可說。",
        "from": "X58n1023_001:0624b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉不可說。",
        "from": "X58n1023_001:0624b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉轉不可說。",
        "from": "X58n1023_001:0624c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一四生六道。",
        "from": "X58n1023_001:0624c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蠢動含靈。",
        "from": "X58n1023_001:0624c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情無情。",
        "from": "X58n1023_001:0624c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆總在我佛剎微塵數極微塵數。",
        "from": "X58n1023_001:0624c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴藏海。",
        "from": "X58n1023_001:0624c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一混融無礙。",
        "from": "X58n1023_001:0624c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧如是說。",
        "from": "X58n1023_001:0624c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等如是聞。",
        "from": "X58n1023_001:0624c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如是住。",
        "from": "X58n1023_001:0624c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生如是見。",
        "from": "X58n1023_001:0624c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生如是見。",
        "from": "X58n1023_001:0624c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如是住。",
        "from": "X58n1023_001:0624c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等如是聞。",
        "from": "X58n1023_001:0624c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧如是說。",
        "from": "X58n1023_001:0624c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而又各各一一聞見住說。",
        "from": "X58n1023_001:0624c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一塵沙艸葉。",
        "from": "X58n1023_001:0624c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有佛剎微塵數諸佛世界。",
        "from": "X58n1023_001:0624c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一塵。",
        "from": "X58n1023_001:0624c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一沙。",
        "from": "X58n1023_001:0624c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一艸。",
        "from": "X58n1023_001:0624c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一葉。",
        "from": "X58n1023_001:0624c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛剎微塵數諸佛世界。",
        "from": "X58n1023_001:0624c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一經歷諸佛世界三昧。",
        "from": "X58n1023_001:0624c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一諸佛三昧佛剎微塵數世界。",
        "from": "X58n1023_001:0624c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了不可得。",
        "from": "X58n1023_001:0624c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我了知一一諸佛世界。",
        "from": "X58n1023_001:0624c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種差別。",
        "from": "X58n1023_001:0624c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切幻化。",
        "from": "X58n1023_001:0624c09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆不可得。",
