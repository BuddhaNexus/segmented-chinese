        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不可了。",
        "from": "X58n1023_001:0624c10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而我知其不可了。",
        "from": "X58n1023_001:0624c10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可見。",
        "from": "X58n1023_001:0624c10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可得。",
        "from": "X58n1023_001:0624c11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我常一念恒處于寂滅定。",
        "from": "X58n1023_001:0624c11_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求寂滅法。",
        "from": "X58n1023_001:0624c11_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無所有。",
        "from": "X58n1023_001:0624c11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是則寂滅念中。",
        "from": "X58n1023_001:0624c12_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛。",
        "from": "X58n1023_001:0624c12_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛剎微塵諸三昧海。",
        "from": "X58n1023_001:0624c12_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種莊嚴。",
        "from": "X58n1023_001:0624c13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種世界。",
        "from": "X58n1023_001:0624c13_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種差別。",
        "from": "X58n1023_001:0624c13_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種供養。",
        "from": "X58n1023_001:0624c13_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛幻化。",
        "from": "X58n1023_001:0624c13_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦無念。",
        "from": "X58n1023_001:0624c14_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以茲無念諸佛幻化。",
        "from": "X58n1023_001:0624c14_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念具足。",
        "from": "X58n1023_001:0624c14_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不違。",
        "from": "X58n1023_001:0624c14_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之華嚴法界大意。",
        "from": "X58n1023_001:0624c15_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻有之說。",
        "from": "X58n1023_001:0624c15_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而幻有如是三昧。",
        "from": "X58n1023_001:0624c15_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況八十一軸之文。",
        "from": "X58n1023_001:0624c16_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及十法界品之說。",
        "from": "X58n1023_001:0624c16_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可思。",
        "from": "X58n1023_001:0624c16_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可議書而盡為一軸。",
        "from": "X58n1023_001:0624c16_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷之放之而更収之。",
        "from": "X58n1023_001:0624c17_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與麼則八十一軸百城烟水。",
        "from": "X58n1023_001:0624c17_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總是外事。",
        "from": "X58n1023_001:0624c18_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩。",
        "from": "X58n1023_001:0624c18_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善知識。",
        "from": "X58n1023_001:0624c18_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為客塵。",
        "from": "X58n1023_001:0624c18_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不妨逆行順行。",
        "from": "X58n1023_001:0624c19_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫說竪說。",
        "from": "X58n1023_001:0624c19_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵說剎說。",
        "from": "X58n1023_001:0624c19_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以經中道。",
        "from": "X58n1023_001:0624c19_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由親近善知識。",
        "from": "X58n1023_001:0624c20_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能勇猛勤修一切智道。",
        "from": "X58n1023_001:0624c20_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由親近善知識。",
        "from": "X58n1023_001:0624c20_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能速疾出生諸大願海。",
        "from": "X58n1023_001:0624c21_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由親近善知識。",
        "from": "X58n1023_001:0624c21_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能于一微塵中說法□徧法界。",
        "from": "X58n1023_001:0624c21_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由親近善知識。",
        "from": "X58n1023_001:0624c22_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于念念行。",
        "from": "X58n1023_001:0624c22_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟安住一切智地。",
        "from": "X58n1023_001:0624c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由親近善知識。",
        "from": "X58n1023_001:0624c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能往十方國土。",
        "from": "X58n1023_001:0624c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見善知識心不散亂。",
        "from": "X58n1023_001:0624c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見善知識破障山。",
        "from": "X58n1023_001:0624c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見善知識入大悲海。",
        "from": "X58n1023_001:0624c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救護眾生。",
        "from": "X58n1023_001:0625a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見善知識得智慧光。",
        "from": "X58n1023_001:0625a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普照法界。",
        "from": "X58n1023_001:0625a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見善知識普能覩見十方佛海。",
        "from": "X58n1023_001:0625a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見善知識得見諸佛轉于法輪。",
        "from": "X58n1023_001:0625a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與麼則佛剎微塵數善知識。",
        "from": "X58n1023_001:0625a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正好逐位參求。",
        "from": "X58n1023_001:0625a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛剎微塵數諸佛三昧。",
        "from": "X58n1023_001:0625a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不妨從頭請問。",
        "from": "X58n1023_001:0625a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知識者。",
        "from": "X58n1023_001:0625a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是不可思議。",
        "from": "X58n1023_001:0625a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可說。",
        "from": "X58n1023_001:0625a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無邊清淨三昧。",
        "from": "X58n1023_001:0625a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲親近善知識者。",
        "from": "X58n1023_001:0625a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必具大因緣。",
        "from": "X58n1023_001:0625a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具無上智。",
        "from": "X58n1023_001:0625a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發無上心。",
        "from": "X58n1023_001:0625a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經百千劫。",
        "from": "X58n1023_001:0625a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久遠不退。",
        "from": "X58n1023_001:0625a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始得如是相應。",
        "from": "X58n1023_001:0625a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首座只如文殊大士。",
        "from": "X58n1023_001:0625a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伸一臂過佛剎微塵數諸佛世界。",
        "from": "X58n1023_001:0625a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩善財頂。",
        "from": "X58n1023_001:0625a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山僧不動本座。",
        "from": "X58n1023_001:0625a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過佛剎微塵數諸佛世界。",
        "from": "X58n1023_001:0625a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將華藏海遮那如來。",
        "from": "X58n1023_001:0625a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可思議三昧。",
        "from": "X58n1023_001:0625a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向一毫頭滔滔說出。",
        "from": "X58n1023_001:0625a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道與文殊是同是別。",
        "from": "X58n1023_001:0625a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非同非別。",
        "from": "X58n1023_001:0625a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總同總別。",
        "from": "X58n1023_001:0625a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師擲去筆云。",
        "from": "X58n1023_001:0625a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紙盡矣。",
        "from": "X58n1023_001:0625a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷之。",
        "from": "X58n1023_001:0625a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴大意(終)",
        "from": "X58n1023_001:0625a14_0",
        "context_with_next_sentence": false
    }
]