[
    {
        "source_sentence": "佛祖統紀卷第二十三",
        "from": "T49n2035_023:0247a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋景定四明東湖沙門志盤撰",
        "from": "T49n2035_023:0247a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷代傳教表第九",
        "from": "T49n2035_023:0247a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北齊悟一心三智之旨。",
        "from": "T49n2035_023:0247a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以授南岳。",
        "from": "T49n2035_023:0247a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳修之以授智者。",
        "from": "T49n2035_023:0247a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者始以五時八教開張一化。",
        "from": "T49n2035_023:0247a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而歸宗於法華本迹之妙。",
        "from": "T49n2035_023:0247b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既發其解必立之行。",
        "from": "T49n2035_023:0247b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是說己心中所行。",
        "from": "T49n2035_023:0247b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示一心三智之證。",
        "from": "T49n2035_023:0247b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載之文字。",
        "from": "T49n2035_023:0247b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用以印心。",
        "from": "T49n2035_023:0247b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以教後世。",
        "from": "T49n2035_023:0247b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自北齊上法龍猛。",
        "from": "T49n2035_023:0247b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下逮法智。",
        "from": "T49n2035_023:0247b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為十七世。",
        "from": "T49n2035_023:0247b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作歷代傳教表。",
        "from": "T49n2035_023:0247b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁",
        "from": "T49n2035_023:0247b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武帝(蕭衍受齊禪都建康稱南朝)天監元年(壬辰盡十八年)普通元年(庚子盡七年)大通元年(丁未盡八年)大同元年(丁卯盡十二年)大同中。",
        "from": "T49n2035_023:0247b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二祖文禪師。",
        "from": "T49n2035_023:0247b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於北朝河南。",
        "from": "T49n2035_023:0247b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為思禪師說三觀。",
        "from": "T49n2035_023:0247b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當東魏孝靜帝天平間。",
        "from": "T49n2035_023:0247b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太清元年(丁卯盡三年)",
        "from": "T49n2035_023:0247b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "簡文帝(綱武帝第三子)天寶元年(庚午盡二年)元帝(繹武帝第七子)承聖元年(壬申盡三年)敬帝(方智元帝第九子)紹泰元年(乙亥)太平元年(丙子)陳武帝(陳覇先受梁禪都建康)永定元年(丁丑盡三年)文帝(蒨武帝兄始興王子)天嘉元年(庚辰盡六年)三祖思禪師於北朝光州大蘇山。",
        "from": "T49n2035_023:0247b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為顗禪師。",
        "from": "T49n2035_023:0247b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說四安樂行。",
        "from": "T49n2035_023:0247b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示普賢道場。",
        "from": "T49n2035_023:0247b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當北齊廢帝乾明元年。",
        "from": "T49n2035_023:0247b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天康元年(丙戌)",
        "from": "T49n2035_023:0247b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廢帝(伯宗文帝二子)",
        "from": "T49n2035_023:0247b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光大元年(丁亥盡二年)二年。",
        "from": "T49n2035_023:0247b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思禪師。",
        "from": "T49n2035_023:0247b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為南岳帝君授戒法。",
        "from": "T49n2035_023:0247b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣帝(頊始興王第二子)",
        "from": "T49n2035_023:0247b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大建元年(己丑盡十四年)四祖顗禪師。",
        "from": "T49n2035_023:0247b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金陵瓦官寺為儀同沈君理僕射徐陵等開法華經題。",
        "from": "T49n2035_023:0247b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夏開釋大義。",
        "from": "T49n2035_023:0247c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白馬敬韶等咸北面受業。",
        "from": "T49n2035_023:0247c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自此後常講大智度論。",
        "from": "T49n2035_023:0247c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說次第禪門。",
        "from": "T49n2035_023:0247c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及為尚書毛喜說六妙門。",
        "from": "T49n2035_023:0247c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大建中南岳思禪師。",
        "from": "T49n2035_023:0247c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為海東玄光法師說法華安樂行。",
        "from": "T49n2035_023:0247c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸國演教。",
        "from": "T49n2035_023:0247c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為高麗東國傳教之始。",
        "from": "T49n2035_023:0247c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大建九年六月二十二日。",
        "from": "T49n2035_023:0247c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳禪師示寂。",
        "from": "T49n2035_023:0247c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少帝(叔寶宣帝長子)至德元年(癸卯盡四年)至德三年。",
        "from": "T49n2035_023:0247c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔瓦官顗禪師。",
        "from": "T49n2035_023:0247c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赴太極殿開大智度論題。",
        "from": "T49n2035_023:0247c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王般若經題。",
        "from": "T49n2035_023:0247c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還靈曜寺就講。",
        "from": "T49n2035_023:0247c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時百座居左。",
        "from": "T49n2035_023:0247c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五等居右。",
        "from": "T49n2035_023:0247c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧曠慧辯。",
        "from": "T49n2035_023:0247c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆奉勅難問。",
        "from": "T49n2035_023:0247c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子臨筵聽法。",
        "from": "T49n2035_023:0247c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百僚盡敬。",
        "from": "T49n2035_023:0247c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至德四年。",
        "from": "T49n2035_023:0247c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔迎顗禪師。",
        "from": "T49n2035_023:0247c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居光宅寺。",
        "from": "T49n2035_023:0247c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝幸寺聽講仁王。",
        "from": "T49n2035_023:0247c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躬禮三拜。",
        "from": "T49n2035_023:0247c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禎明元年(丁未盡三年)顗禪師。",
        "from": "T49n2035_023:0247c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於光宅講法華經。",
        "from": "T49n2035_023:0247c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安預聽。",
        "from": "T49n2035_023:0247c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋",
        "from": "T49n2035_023:0247c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文帝(楊堅相周靜帝受禪都長安)開皇十年(庚戌是年陳亡始稱正統盡二十一年)開皇十一年。",
        "from": "T49n2035_023:0247c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉王總管揚州。",
        "from": "T49n2035_023:0247c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎顗禪師於大聽事。",
        "from": "T49n2035_023:0247c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設千僧齋授菩薩戒。",
        "from": "T49n2035_023:0247c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師名晉王為總持王。",
        "from": "T49n2035_023:0247c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上師號稱智者。",
        "from": "T49n2035_023:0247c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十二年。",
        "from": "T49n2035_023:0247c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師於荊州當陽玉泉山為關王父子授戒。",
        "from": "T49n2035_023:0247c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十三年。",
        "from": "T49n2035_023:0247c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0247c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於玉泉說法華玄義。",
        "from": "T49n2035_023:0247c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安預聽。",
        "from": "T49n2035_023:0247c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十四年。",
        "from": "T49n2035_023:0247c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0247c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於玉泉說摩訶止觀。",
        "from": "T49n2035_023:0247c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安預聽。",
        "from": "T49n2035_023:0247c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是年過岳陽為刺史王宣武授大乘戒法。",
        "from": "T49n2035_023:0247c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為學士曇捷等講金光明經。",
        "from": "T49n2035_023:0248a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十五年七月。",
        "from": "T49n2035_023:0248a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0248a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至揚州禪眾寺。",
        "from": "T49n2035_023:0248a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以所著淨名義疏。",
        "from": "T49n2035_023:0248a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉上晉王。",
        "from": "T49n2035_023:0248a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九月辭歸天台。",
        "from": "T49n2035_023:0248a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十七年九月。",
        "from": "T49n2035_023:0248a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0248a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於天台佛隴為諸弟子口授觀心論。",
        "from": "T49n2035_023:0248a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一月。",
        "from": "T49n2035_023:0248a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於石城寺為弟子說十如。",
        "from": "T49n2035_023:0248a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四不生。",
        "from": "T49n2035_023:0248a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十法界。",
        "from": "T49n2035_023:0248a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三觀。",
        "from": "T49n2035_023:0248a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四無量心。",
        "from": "T49n2035_023:0248a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四悉檀。",
        "from": "T49n2035_023:0248a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四諦。",
        "from": "T49n2035_023:0248a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二因緣。",
        "from": "T49n2035_023:0248a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六波羅密。",
        "from": "T49n2035_023:0248a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一法門。",
        "from": "T49n2035_023:0248a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是月二十四日。",
        "from": "T49n2035_023:0248a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂於石城彌勒石佛像前。",
        "from": "T49n2035_023:0248a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁壽元年(辛酉盡四年)",
        "from": "T49n2035_023:0248a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煬帝(廣文帝第二子)大業元年(乙丑盡十二年)恭帝(隋煬帝子)義寧元年(丁丑盡一年)五祖章安禪師。",
        "from": "T49n2035_023:0248a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於天台國清寺為法華威禪師。",
        "from": "T49n2035_023:0248a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說止觀心要。",
        "from": "T49n2035_023:0248a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐",
        "from": "T49n2035_023:0248a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高祖(李淵受隋禪都長安)武德元年(戊寅盡九年)太宗(世民高祖次子)貞觀元年(丁亥盡二十三年)貞觀六年八月七日章安禪師。",
        "from": "T49n2035_023:0248a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於國清寺。",
        "from": "T49n2035_023:0248a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂",
        "from": "T49n2035_023:0248a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞觀二十年。",
        "from": "T49n2035_023:0248a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召法華威禪師。",
        "from": "T49n2035_023:0248a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授朝散大夫引駕四大師。",
        "from": "T49n2035_023:0248a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高宗(治太宗第九子)永徽元年(庚戌盡六年)永徽六年。",
        "from": "T49n2035_023:0248a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召天宮威禪師。",
        "from": "T49n2035_023:0248a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授朝散大夫引駕四大師。",
        "from": "T49n2035_023:0248a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與法華同職位。",
        "from": "T49n2035_023:0248a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯慶元年(丙辰盡五年)龍朔元年(辛酉盡三年)麟德元年(甲子盡二年)乾封元年(丙寅盡二年)總章元年(戊辰盡二年)咸享元年(庚午盡四年)上元元年(甲戌盡二年)儀鳳元年(丙子盡三年)調露元年(己卯)永隆元年(庚辰)十一月二十八日。",
        "from": "T49n2035_023:0248a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華禪師。",
        "from": "T49n2035_023:0248b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂。",
        "from": "T49n2035_023:0248b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開耀元年(辛巳)永淳元年(壬午)弘道元年(癸未)則天高后(武氏高宗之后廢太子為廬陵王臨朝稱制)光宅元年(甲申)垂拱元年(乙酉盡四年)永昌元年(己丑)載初元年(庚寅二年)如意元年(壬辰盡二年)如意二年。",
        "from": "T49n2035_023:0248b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七祖天宮禪師。",
        "from": "T49n2035_023:0248b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於東陽天宮為左溪朗禪師說止觀。",
        "from": "T49n2035_023:0248b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延載元年(甲午)證聖元年(乙未)萬歲通天元年(丙申)神功元年(丁酉)聖歷元年(戊戌盡二年)久視元年(庚子)長安元年(辛丑盡四年)中宗(顯高宗第七子母武后嘗廢為廬陵王)神龍元年(乙巳盡二年)景龍元年(丁未盡三年)睿宗(旦高宗第八子)景雲元年(庚戌盡二年)先天元年(壬子)玄宗(隆基睿宗第三子)開元元年(癸丑盡二十九年)開元十八年。",
        "from": "T49n2035_023:0248b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八祖左溪禪師。",
        "from": "T49n2035_023:0248b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於東陽左溪為荊溪然禪師說止觀。",
        "from": "T49n2035_023:0248b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是年新羅法融等。",
        "from": "T49n2035_023:0248b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教歸國。",
        "from": "T49n2035_023:0248b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天寶元年(壬午盡十四年)天寶十三年九月十九日。",
        "from": "T49n2035_023:0248b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左溪禪師示寂。",
        "from": "T49n2035_023:0248b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅宗(亨玄宗第三子)至德元年(丙申盡二年)乾元元年(戊戌盡二年)上元元年(庚子盡二年)寶應元年(壬寅)代宗(豫肅宗長子)廣德元年(癸卯盡二年)永泰元年(乙巳)大歷元年(丙午盡十四年)大歷中。",
        "from": "T49n2035_023:0248b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九祖荊溪禪師。",
        "from": "T49n2035_023:0248c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於天台佛隴為邃法師說止觀。",
        "from": "T49n2035_023:0248c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德宗(适代宗長子)建中元年(庚申盡四年)建中三年二月五日。",
        "from": "T49n2035_023:0248c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪禪師於佛隴示寂。",
        "from": "T49n2035_023:0248c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興元元年(甲子)貞元元年(乙丑盡廿一年)貞元中。",
        "from": "T49n2035_023:0248c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十祖邃法師。",
        "from": "T49n2035_023:0248c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於國清。",
        "from": "T49n2035_023:0248c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為修法師說止觀。",
        "from": "T49n2035_023:0248c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順宗(誦德宗長子)永貞元年",
        "from": "T49n2035_023:0248c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邃法師於國清為日本最澄說止觀。",
        "from": "T49n2035_023:0248c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡寫一宗論疏以歸。",
        "from": "T49n2035_023:0248c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為日本傳教之始。",
        "from": "T49n2035_023:0248c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憲宗(純順宗長子)元和元年(丙戌盡十五年)穆宗(恒憲宗第三子)長慶元年(辛丑盡四年)敬宗(湛穆宗長子)寶歷元年(乙巳盡二年)文宗(昂穆宗次子)大和元年(丁未盡九年)大和中。",
        "from": "T49n2035_023:0248c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一祖修法師。",
        "from": "T49n2035_023:0248c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於禪林。",
        "from": "T49n2035_023:0248c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為外法師說止觀。",
        "from": "T49n2035_023:0248c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開成元年(丙辰盡五年)武宗(炎穆宗第五子)會昌元年(辛酉盡六年)會昌六年詔毀天下佛寺沙汰僧尼。",
        "from": "T49n2035_023:0248c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣宗(忱憲宗十三子。",
        "from": "T49n2035_023:0248c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武宗欲加害。",
        "from": "T49n2035_023:0248c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂逃難為沙門依齊安師。",
        "from": "T49n2035_023:0248c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武宗崩群臣迎入京。",
        "from": "T49n2035_023:0248c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即帝位)大中元年(丁卯盡十三年)詔復會昌所廢寺院。",
        "from": "T49n2035_023:0248c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懿宗(催宣宗長子)咸通元年(庚辰盡十四年)僖宗(溪懿宗第五子)乾符元年(甲午盡六年)乾符中十二祖外法師於國清為琇法師說止觀。",
        "from": "T49n2035_023:0248c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣明元年(庚子)中和元年(辛丑盡四年)光啟元年(乙巳盡三年)文德元年(戊申)昭宗(曄懿宗第七子)龍紀元年(己酉)十二祖琇法師於國清為竦法師說止觀法門。",
        "from": "T49n2035_023:0249a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大順元年(庚戌盡二年)景福元年(壬子盡三年)乾寧元年(甲寅盡四年)光化元年(戊午盡三年)天復元年(辛酉盡四年)景宗(祝昭宗第九子)天祐元年(甲子盡三年)梁(五代)太祖(朱溫受唐禪都洛陽)開平元年(丁卯盡四年)乾化元年(辛未盡二年)末帝(瑱太祖第四子)乾化三年(癸酉盡二年)貞明元年(乙亥盡六年)龍德元年(辛巳盡二年)唐莊宗(李存勗破梁即位都洛陽)同光元年(癸未盡三年)明宗(亶本屈突部人賜姓李氏為莊宗昆弟)天成元年(丙戌盡四年)長興元年(庚寅盡四年)末帝(從珣本姓王明宗養子)清泰元年(甲午盡二年)晉高祖(石敬塘滅唐即位都汴)天福元年(丙申盡六年)天福中十四祖竦法師於國清為寂法師說止觀。",
        "from": "T49n2035_023:0249a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少帝(厘貴高祖從子)天福七年(壬寅盡二年)開運元年(甲辰盡三年)漢高祖(劉知遠。",
        "from": "T49n2035_023:0249a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉少帝為契丹所虜。",
        "from": "T49n2035_023:0249a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中原無主遂即位於晉陽。",
        "from": "T49n2035_023:0249a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍用晉年號。",
        "from": "T49n2035_023:0249a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都汴)天福十二年(丁未)隱帝(承祐高祖猶子)乾祐元年(戊申盡三年)周太祖(郭令威受漢禪都汴)廣順元年(辛亥盡三年)世宗(榮太祖后柴氏之姪受遺制即帝位)顯德元年(甲寅盡五年)恭帝(崇訓世宗子)顯德六年(己未)宋太祖(受周禪都汴京)建隆元年(庚申盡三年)吳越王錢俶。",
        "from": "T49n2035_023:0249a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣使往高麗日本。",
        "from": "T49n2035_023:0249b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求遺逸教乘論疏。",
        "from": "T49n2035_023:0249b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建隆二年。",
        "from": "T49n2035_023:0249b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高麗國。",
        "from": "T49n2035_023:0249b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣沙門諦觀。",
        "from": "T49n2035_023:0249b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持天台論疏至螺溪乾德元年(癸亥盡五年)。",
        "from": "T49n2035_023:0249b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五祖螺溪寂法師。",
        "from": "T49n2035_023:0249b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為通法師說止觀法門。",
        "from": "T49n2035_023:0249b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開寶元年(戊辰盡八年)",
        "from": "T49n2035_023:0249b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太宗太平興國元年(丙子盡八年)",
        "from": "T49n2035_023:0249b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太平興國四年。",
        "from": "T49n2035_023:0249b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六祖寶雲通法師。",
        "from": "T49n2035_023:0249b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為四明禮法師。",
        "from": "T49n2035_023:0249b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說止觀諸大乘法。",
        "from": "T49n2035_023:0249b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍熙元年(甲申盡四年)雍熙四年十一月四日螺溪法師示寂。",
        "from": "T49n2035_023:0249b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端拱元年(戊子盡二年)十月二十一日寶雲法師示寂。",
        "from": "T49n2035_023:0249b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳化元年(庚寅盡五年)至道元年(乙未盡三年)真宗咸平元年(戊戌盡六年)咸平六年。",
        "from": "T49n2035_023:0249b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七祖法智法師。",
        "from": "T49n2035_023:0249b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於南湖保恩答日本源信。",
        "from": "T49n2035_023:0249b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信問目二十七條。",
        "from": "T49n2035_023:0249b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景德元年(甲辰盡四年)撰指要鈔。",
        "from": "T49n2035_023:0249b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成出別理隨緣二十問。",
        "from": "T49n2035_023:0249b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以攻繼齊指濫之失。",
        "from": "T49n2035_023:0249b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景德四年。",
        "from": "T49n2035_023:0249b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣本如持十義書二百問。",
        "from": "T49n2035_023:0249b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上錢唐昭師。",
        "from": "T49n2035_023:0249b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以救光明玄不立觀心之失。",
        "from": "T49n2035_023:0249c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中祥符元年(戊申盡九年)",
        "from": "T49n2035_023:0249c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中祥符三年。",
        "from": "T49n2035_023:0249c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜保恩改額延慶。",
        "from": "T49n2035_023:0249c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同異聞師。",
        "from": "T49n2035_023:0249c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作誡誓辭二篇。",
        "from": "T49n2035_023:0249c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾為長講天台宗教之所。",
        "from": "T49n2035_023:0249c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中祥符七年。",
        "from": "T49n2035_023:0249c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰觀經融心解。",
        "from": "T49n2035_023:0249c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天禧元年(丁巳盡五年)與十僧。",
        "from": "T49n2035_023:0249c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修法華懺。",
        "from": "T49n2035_023:0249c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "期滿三年。",
        "from": "T49n2035_023:0249c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚身供法。",
        "from": "T49n2035_023:0249c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以公私勸止不獲如願。",
        "from": "T49n2035_023:0249c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述消伏三用。",
        "from": "T49n2035_023:0249c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以破孤山闡義鈔之非。",
        "from": "T49n2035_023:0249c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天禧四年。",
        "from": "T49n2035_023:0249c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "駙馬李遵勗。",
        "from": "T49n2035_023:0249c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏賜法智大師。",
        "from": "T49n2035_023:0249c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣旨令住世演教。",
        "from": "T49n2035_023:0249c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許遺身。",
        "from": "T49n2035_023:0249c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天禧五年。",
        "from": "T49n2035_023:0249c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主上遣內侍俞源清。",
        "from": "T49n2035_023:0249c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣旨就寺。",
        "from": "T49n2035_023:0249c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修法華懺三日。",
        "from": "T49n2035_023:0249c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為述修懺要旨以答聖意。",
        "from": "T49n2035_023:0249c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是歲撰觀音別行玄記。",
        "from": "T49n2035_023:0249c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀經妙宗鈔皆成。",
        "from": "T49n2035_023:0249c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾興元年(壬戌)",
        "from": "T49n2035_023:0249c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁宗",
        "from": "T49n2035_023:0249c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖元年(癸亥盡九年)撰光明續遺記成。",
        "from": "T49n2035_023:0249c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖三年。",
        "from": "T49n2035_023:0249c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先是天禧初。",
        "from": "T49n2035_023:0249c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔天下立放生池。",
        "from": "T49n2035_023:0249c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師始於佛生日。",
        "from": "T49n2035_023:0249c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱魚鳥為放生事。",
        "from": "T49n2035_023:0249c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自述放生文。",
        "from": "T49n2035_023:0249c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是年郡守曾會。",
        "from": "T49n2035_023:0249c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以事聞。",
        "from": "T49n2035_023:0249c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅樞密劉均。",
        "from": "T49n2035_023:0249c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰文刻石。",
        "from": "T49n2035_023:0249c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰宣聖化。",
        "from": "T49n2035_023:0249c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖五年。",
        "from": "T49n2035_023:0249c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰光明文句記。",
        "from": "T49n2035_023:0249c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後廣智續讚佛一品。",
        "from": "T49n2035_023:0249c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖六年正月元日。",
        "from": "T49n2035_023:0249c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建光明懺七日為順寂之期。",
        "from": "T49n2035_023:0249c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至五日趺坐說法唱佛而化。",
        "from": "T49n2035_023:0249c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍維異香芬郁。",
        "from": "T49n2035_023:0249c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利無數。",
        "from": "T49n2035_023:0249c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌根不壞。",
        "from": "T49n2035_023:0249c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若紅蓮華。",
        "from": "T49n2035_023:0249c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明道元年(壬申盡二年)明道二年七月。",
        "from": "T49n2035_023:0250a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉靈骨起塔於南城崇法。",
        "from": "T49n2035_023:0250a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖統紀卷第二十三(終)",
        "from": "T49n2035_023:0250a03_0",
        "context_with_next_sentence": false
    }
]