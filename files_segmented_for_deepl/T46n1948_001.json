[
    {
        "source_sentence": "天台智者大師齋忌禮讚由序",
        "from": "T46n1948_001:0966a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋天竺寺慈雲大師遵式述",
        "from": "T46n1948_001:0966a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余甞見諸處傳山門教迹。",
        "from": "T46n1948_001:0966a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或當。",
        "from": "T46n1948_001:0966a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師遠忌。",
        "from": "T46n1948_001:0966a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追慕修齋。",
        "from": "T46n1948_001:0966a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆闕其修禮之法。",
        "from": "T46n1948_001:0966a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今著數偈。",
        "from": "T46n1948_001:0966a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略用伸仰。",
        "from": "T46n1948_001:0966a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫內心寂照功成入位。",
        "from": "T46n1948_001:0966a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外則神通說法。",
        "from": "T46n1948_001:0966a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應乎群緣故。",
        "from": "T46n1948_001:0966a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生化始終。",
        "from": "T46n1948_001:0966a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡十二偈。",
        "from": "T46n1948_001:0966a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實統智定之用耳。",
        "from": "T46n1948_001:0966a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖於別傳。",
        "from": "T46n1948_001:0966a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少有不次。",
        "from": "T46n1948_001:0966a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋別樹一場次第之意。",
        "from": "T46n1948_001:0966a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初二偈三昧降魔。",
        "from": "T46n1948_001:0966a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說法華。",
        "from": "T46n1948_001:0966a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又次說止觀淨名涅槃放生施戒。",
        "from": "T46n1948_001:0966a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如次也。",
        "from": "T46n1948_001:0966a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒後靈感一偈難盡芳猷。",
        "from": "T46n1948_001:0966a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他方之身請護遺教。",
        "from": "T46n1948_001:0966a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洎五悔合十七偈。",
        "from": "T46n1948_001:0966a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀者無嫌辭近理寡。",
        "from": "T46n1948_001:0966a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊備其以時追想之誠耳。",
        "from": "T46n1948_001:0966a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或略可濟用稱唱之時。",
        "from": "T46n1948_001:0966a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜須鄭重。",
        "from": "T46n1948_001:0966a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必希感召。",
        "from": "T46n1948_001:0966a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永蔭教門。",
        "from": "T46n1948_001:0966a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目為智者齋忌禮讚文云爾。",
        "from": "T46n1948_001:0966a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台智者大師齋忌禮讚文",
        "from": "T46n1948_001:0966a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(僧眾三禮各各互跪燒香散華首者唱云)。",
        "from": "T46n1948_001:0966a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首天台教主佛隴禪師。",
        "from": "T46n1948_001:0966a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若之神鑒。",
        "from": "T46n1948_001:0966a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊解脫之光臨。",
        "from": "T46n1948_001:0966a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫盡聲揚虛谷響答。",
        "from": "T46n1948_001:0966a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何疑機扣真慈。",
        "from": "T46n1948_001:0966a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應來不忒。",
        "from": "T46n1948_001:0966a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊以。",
        "from": "T46n1948_001:0966a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如清淨。",
        "from": "T46n1948_001:0966a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無色像之端。",
        "from": "T46n1948_001:0966a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界含容。",
        "from": "T46n1948_001:0966a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有往來之狀。",
        "from": "T46n1948_001:0966a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂形萬有。",
        "from": "T46n1948_001:0966a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "混迹群方。",
        "from": "T46n1948_001:0966a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰知證妙位高。",
        "from": "T46n1948_001:0966a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秖仰池深華大。",
        "from": "T46n1948_001:0966a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊堯舜二君之奇相。",
        "from": "T46n1948_001:0966a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作陳隋兩國之尊師。",
        "from": "T46n1948_001:0966a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法圓融。",
        "from": "T46n1948_001:0966a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降魔自在。",
        "from": "T46n1948_001:0966a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智定之巍巍若是。",
        "from": "T46n1948_001:0966a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲之靄靄難量。",
        "from": "T46n1948_001:0966a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T46n1948_001:0966a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著如來衣。",
        "from": "T46n1948_001:0966a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入如來室。",
        "from": "T46n1948_001:0966a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐則如來所坐。",
        "from": "T46n1948_001:0966a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行則如來所行。",
        "from": "T46n1948_001:0966b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為如來手摩。",
        "from": "T46n1948_001:0966b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如來肩荷。",
        "from": "T46n1948_001:0966b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以如來供養。",
        "from": "T46n1948_001:0966b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而供養之。",
        "from": "T46n1948_001:0966b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德不可稱量。",
        "from": "T46n1948_001:0966b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎略難窮盡。",
        "from": "T46n1948_001:0966b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則伏值鶴林追遠。",
        "from": "T46n1948_001:0966b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢言黍稷非馨。",
        "from": "T46n1948_001:0966b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊薦精誠。",
        "from": "T46n1948_001:0966b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰惟昭鑒(初時唱已。",
        "from": "T46n1948_001:0966b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便請若餘時但除請。",
        "from": "T46n1948_001:0966b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直唱此語已。",
        "from": "T46n1948_001:0966b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便陳意禮讚)。",
        "from": "T46n1948_001:0966b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教主智者大師。",
        "from": "T46n1948_001:0966b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　惟願降臨道場受我供養(三請下皆準此)。",
        "from": "T46n1948_001:0966b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台高祖無畏論師龍樹尊者。",
        "from": "T46n1948_001:0966b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台宗教第二祖師北齊尊者。",
        "from": "T46n1948_001:0966b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台適嗣第三祖師南岳尊者。",
        "from": "T46n1948_001:0966b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台結集教藏第五祖師章安尊者。",
        "from": "T46n1948_001:0966b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教觀第六祖師法華尊者。",
        "from": "T46n1948_001:0966b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教觀第七祖師天宮尊者。",
        "from": "T46n1948_001:0966b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教觀第八祖師左谿尊者。",
        "from": "T46n1948_001:0966b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台記主第九祖師荊谿尊者。",
        "from": "T46n1948_001:0966b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　(請已讚歎宣疏歎曰)。",
        "from": "T46n1948_001:0966b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界圓融象無所象。",
        "from": "T46n1948_001:0966b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如清淨化無所化。",
        "from": "T46n1948_001:0966b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖象無所象。",
        "from": "T46n1948_001:0966b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所而不象。",
        "from": "T46n1948_001:0966b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化無所化。",
        "from": "T46n1948_001:0966b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所而不化。",
        "from": "T46n1948_001:0966b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燦燦現二王之相。",
        "from": "T46n1948_001:0966b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雄雄為兩國之師。",
        "from": "T46n1948_001:0966b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化緣謝南岳之言。",
        "from": "T46n1948_001:0966b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道譽重東林之價(舊本又云。",
        "from": "T46n1948_001:0966b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法門功德難可稱揚。",
        "from": "T46n1948_001:0966b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則伏值遠忌之晨。",
        "from": "T46n1948_001:0966b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略展薦羞之禮。",
        "from": "T46n1948_001:0966b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有疏詞。",
        "from": "T46n1948_001:0966b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰對宣白)。",
        "from": "T46n1948_001:0966b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮大蘇山內修法華三昧時身天台智者。",
        "from": "T46n1948_001:0966b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　(自天台智者下眾和拜起已讚歎)。",
        "from": "T46n1948_001:0966b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遊心法界諸心寂　　如日依空不住空　三千實相頓圓明　　八萬塵勞等真淨　靈山妙會依依見　　寶塔全身了了觀　不是親逢南岳師　　人誰識此深禪相　　　故我一心歸命頂禮(一拜下去準此)。",
        "from": "T46n1948_001:0966b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮華頂峰上降伏天魔眾時身天台智者。",
        "from": "T46n1948_001:0966c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　孤禪片石心彌淨　　寒擁深雲夜未央　忽震千雷動地來　　潛窺百怪掀天至　始覺鬼神纔散滅　　還為父母更綢繆　強軟消摩寂照功　　神僧出現親稱讚一心頂禮瓦官精舍開法華妙義時身天台智者。",
        "from": "T46n1948_001:0966c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　鷲峰極唱經稱妙　　四十餘年祕不談　家業須逢嫡子傳　　髻珠不是隨勳得　權實巍巍唯佛了　　本迹汪汪補處疑　智者當時親得聞　　瓦官重更分明說一心頂禮玉泉寶閣說摩訶止觀時身天台智者。",
        "from": "T46n1948_001:0966c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　九旬慈霔開圓行　　十法融談立妙乘　寶車高廣具莊嚴　　白牛肥壯行平正　安御四緣遊直道　　能過十境到涼池　乘壞驢車滿世間　　稽首天台誓依怙一心頂禮太極殿上講仁王般若時身天台智者。",
        "from": "T46n1948_001:0966c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　百座似星環北極　　四依如月出東溟　八辯洋洋萬國安　　雙空蕩蕩千災散　玉指競鳴金殿響　　牛香重發獸爐騰　稽首巍巍五忍身　　堪消萬乘殷勤禮一心頂禮陳隋兩國授二宮頓戒時身天台智者。",
        "from": "T46n1948_001:0966c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　玉珮鏘鏘圍法座　　金爐靄靄對人師　拜手咸求服戒纓　　傾眸不捨瞻慈相　五德精明如滿月　　二嚴深廣類滄溟　人中師子法中龍　　隋主從茲稱智者一心頂禮佛隴道樹解淨名禪講時身天台智者。",
        "from": "T46n1948_001:0966c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　行道霜林香徑淨　　冥心月樹石房寒　明淨功夫只自知　　幽深境界何人到　秉筆或因隋帝命　　開經時感梵僧來　我等當時恨不逢　　歸命天台禪智海一心頂禮靈石海岸開涅槃萬句時身天台智者。",
        "from": "T46n1948_001:0967a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　海山一點秋光裏　　金閣危層翠障間　萬句圓開解脫門　　千徒競擁慈悲室　經案夜分江墅月　　講鐘寒徹水村家　三德彌資三觀明　　無人共飽醍醐味一心頂禮放生池上講金光流水時身天台智者。",
        "from": "T46n1948_001:0967a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　方舟泛泛清江上　　法語[日*勞][日*勞]碧浪心　兩岸香飄野老隨　　中流磬發金鱗躍　計詡獄中曾赴難　　修禪堂上解酬恩　而今依舊[竺-二+(一/(尸@邑))]梁多　　慈眼他方應憫見一心頂禮石城金剎現雙林善寂時身天台智者。",
        "from": "T46n1948_001:0967a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　化緣火滅機薪盡　　端坐冥冥石像前　諸子號咷竟不還　　群生盲瞑誰開導　星河慘淡金波缺　　雲谷颼飀鶴樹低　百金妙藥寄章安　　猶恨無人付禪慧一心頂禮佛隴樹下帝封靈塔全身天台智者。",
        "from": "T46n1948_001:0967a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　加趺宛似安禪貌　　閉塔猶同揜定房　初夜流光徹遠林　　有時彈指聞深院　年年紫詔離金闕　　歲歲皇華啟石門　最後開封失舊身　　不知前往何方去一心頂禮十方世界普生佛剎中身天台智者。",
        "from": "T46n1948_001:0967a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　慈心天眼應遙見　　六十餘州舊結緣　既將種子播良田　　須為萌芽作甘雨　父去謾留身後藥　　親離空繫醉中珠　神州佛隴願重遊　　速使群生開佛慧一心頂禮天台高祖無畏論師龍樹尊者。",
        "from": "T46n1948_001:0967b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台宗教第二祖師北齊尊者。",
        "from": "T46n1948_001:0967b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台適嗣第三祖師南岳尊者。",
        "from": "T46n1948_001:0967b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台結集教藏第五祖師章安尊者。",
        "from": "T46n1948_001:0967b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台教觀第六祖師法華尊者。",
        "from": "T46n1948_001:0967b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台教觀第七祖師天宮尊者。",
        "from": "T46n1948_001:0967b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台教觀第八祖師左谿尊者。",
        "from": "T46n1948_001:0967b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台記主第九祖師荊谿尊者。",
        "from": "T46n1948_001:0967b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　(禮已各跪燒香散華默運逆順十心。",
        "from": "T46n1948_001:0967b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運十心已。",
        "from": "T46n1948_001:0967b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想對一切三寶諸祖前。",
        "from": "T46n1948_001:0967b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行懺悔法)。",
        "from": "T46n1948_001:0967b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懺悔。",
        "from": "T46n1948_001:0967b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及十方法界一切眾生。",
        "from": "T46n1948_001:0967b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無明無始時來。",
        "from": "T46n1948_001:0967b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順有識有流結使。",
        "from": "T46n1948_001:0967b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動身口意。",
        "from": "T46n1948_001:0967b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨貪瞋癡。",
        "from": "T46n1948_001:0967b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造七遮五逆之愆。",
        "from": "T46n1948_001:0967b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯十重四夷之戒。",
        "from": "T46n1948_001:0967b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀謗三乘正教。",
        "from": "T46n1948_001:0967b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平陵五種法師。",
        "from": "T46n1948_001:0967b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行四邪五邪坐無慚無愧。",
        "from": "T46n1948_001:0967b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指三塗如園觀。",
        "from": "T46n1948_001:0967b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具八苦為莊嚴。",
        "from": "T46n1948_001:0967b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生向邪見家生。",
        "from": "T46n1948_001:0967b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世出空無佛世。",
        "from": "T46n1948_001:0967b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣今日偶得人身。",
        "from": "T46n1948_001:0967b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "效雪嶺出家。",
        "from": "T46n1948_001:0967b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "值天台遺教。",
        "from": "T46n1948_001:0967b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但恨昏雲久覆。",
        "from": "T46n1948_001:0967b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見網交纏。",
        "from": "T46n1948_001:0967b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千如權實法門。",
        "from": "T46n1948_001:0967b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濫稱染指十法成乘妙觀。",
        "from": "T46n1948_001:0967b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未始經心。",
        "from": "T46n1948_001:0967b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空有臨池羨魚。",
        "from": "T46n1948_001:0967b24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解歸家結網。",
        "from": "T46n1948_001:0967b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡猿未鎖。",
        "from": "T46n1948_001:0967b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五塵之林裏長飛。",
        "from": "T46n1948_001:0967b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴鹿當陽。",
        "from": "T46n1948_001:0967b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六欲之澤中永騖。",
        "from": "T46n1948_001:0967b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故使身圍法座。",
        "from": "T46n1948_001:0967b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心繞塵緣。",
        "from": "T46n1948_001:0967b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八音之徒震雷霆。",
        "from": "T46n1948_001:0967b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四辯之謾陳乳色。",
        "from": "T46n1948_001:0967b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加以謔談聖典。",
        "from": "T46n1948_001:0967b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侮慢教文。",
        "from": "T46n1948_001:0967b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧思法佛全身。",
        "from": "T46n1948_001:0967b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈念雪山半偈。",
        "from": "T46n1948_001:0967b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現招愚暗。",
        "from": "T46n1948_001:0967b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來報邪癡。",
        "from": "T46n1948_001:0967b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謗人慢法之愆。",
        "from": "T46n1948_001:0967b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬劫千山之障。",
        "from": "T46n1948_001:0967c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯罪惡無量無邊。",
        "from": "T46n1948_001:0967c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對三寶披陳。",
        "from": "T46n1948_001:0967c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向四依發露。",
        "from": "T46n1948_001:0967c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷相續念。",
        "from": "T46n1948_001:0967c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨覆藏心。",
        "from": "T46n1948_001:0967c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願普承懺悔光明。",
        "from": "T46n1948_001:0967c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾罪等虛空清淨懺悔已一心歸命普禮。",
        "from": "T46n1948_001:0967c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心勸請。",
        "from": "T46n1948_001:0967c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一念一時咸勸請　　十方剎海劫如來　普為眾生轉法輪　　莫便涅槃歸寂滅　三乘賢聖諸知識　　一切慈悲住世間　但作眾生利樂緣　　我皆勸請身心禮　　　勸請已一心歸命普請。",
        "from": "T46n1948_001:0967c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心隨喜。",
        "from": "T46n1948_001:0967c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　虛空法界微塵數　　諸佛從初發道心　修行劫海得菩提　　乃至涅槃分舍利　三乘賢聖無生業　　十善凡夫有漏因　乃至低頭小善根　　我皆頂戴生歡喜　　　隨喜已一心歸命普禮。",
        "from": "T46n1948_001:0967c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心迴向。",
        "from": "T46n1948_001:0967c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　從初乃至於隨喜　　三業修行眾善根　迴入虛空實際中　　等同利樂群生界　所修福智皆和合　　所成身土悉莊嚴　最後微塵眾道場　　普共眾生成正覺　　　迴向已一心歸命普禮。",
        "from": "T46n1948_001:0967c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心發願。",
        "from": "T46n1948_001:0967c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願我常隨諸佛學　　微塵剎海劫修行　析骨書經等妙高　　亡軀為法周沙界　宣揚諸佛圓常教　　開示眾生解脫門　雖然究竟佛菩提　　不捨普賢菩薩行　　　(舊有願文錄之於此)。",
        "from": "T46n1948_001:0967c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願我盡生無別念　　天台妙教獨相隨　聲香浩浩罷搖情　　名利汪汪休奪志　展卷研幾雲屋夜　　冥心索隱雪房時　諸祖傳弘誓海深　　願常冥助令開悟　　　發願已一心歸命普禮。",
        "from": "T46n1948_001:0967c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台智者大師齋忌禮讚文",
        "from": "T46n1948_001:0968a05_0",
        "context_with_next_sentence": false
    }
]