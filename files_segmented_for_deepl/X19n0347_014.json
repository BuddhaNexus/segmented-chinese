[
    {
        "source_sentence": "維摩詰所說經卷十四",
        "from": "X19n0347_014:0575a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑累品",
        "from": "X19n0347_014:0575a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是佛告彌勒菩薩言。",
        "from": "X19n0347_014:0575a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒。",
        "from": "X19n0347_014:0575a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今以是無量億阿僧祇劫所集。",
        "from": "X19n0347_014:0575a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿耨多羅三藐三菩提法。",
        "from": "X19n0347_014:0575a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑於汝。",
        "from": "X19n0347_014:0575a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是輩經。",
        "from": "X19n0347_014:0575a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛滅後末世之中。",
        "from": "X19n0347_014:0575a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等當以神力。",
        "from": "X19n0347_014:0575a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣宣流布於閻浮提。",
        "from": "X19n0347_014:0575a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無令斷絕。",
        "from": "X19n0347_014:0575a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "X19n0347_014:0575a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來世中。",
        "from": "X19n0347_014:0575a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當有善男子善女人。",
        "from": "X19n0347_014:0575a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天龍鬼神。",
        "from": "X19n0347_014:0575a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾闥婆羅剎等。",
        "from": "X19n0347_014:0575a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發阿耨多羅三藐三菩提心。",
        "from": "X19n0347_014:0575a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂于大法。",
        "from": "X19n0347_014:0575a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若使不聞如是等經。",
        "from": "X19n0347_014:0575a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則失善利。",
        "from": "X19n0347_014:0575a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此輩人聞是等經。",
        "from": "X19n0347_014:0575a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必多信樂。",
        "from": "X19n0347_014:0575b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發希有心。",
        "from": "X19n0347_014:0575b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以頂受。",
        "from": "X19n0347_014:0575b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸眾生所應得利。",
        "from": "X19n0347_014:0575b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為廣說。",
        "from": "X19n0347_014:0575b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒。",
        "from": "X19n0347_014:0575b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知菩薩有二相。",
        "from": "X19n0347_014:0575b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂為二。",
        "from": "X19n0347_014:0575b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者好於雜句文飾之事。",
        "from": "X19n0347_014:0575b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者不畏深義。",
        "from": "X19n0347_014:0575b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實能入。",
        "from": "X19n0347_014:0575b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若好雜句文飾事者。",
        "from": "X19n0347_014:0575b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是為新學菩薩。",
        "from": "X19n0347_014:0575b04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於如是無染無著。",
        "from": "X19n0347_014:0575b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深經典。",
        "from": "X19n0347_014:0575b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有恐畏。",
        "from": "X19n0347_014:0575b05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能入其中。",
        "from": "X19n0347_014:0575b06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已心淨。",
        "from": "X19n0347_014:0575b06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦。",
        "from": "X19n0347_014:0575b06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說修行。",
        "from": "X19n0347_014:0575b06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是為久修道行。",
        "from": "X19n0347_014:0575b07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒。",
        "from": "X19n0347_014:0575b07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有二法。",
        "from": "X19n0347_014:0575b07_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名新學者。",
        "from": "X19n0347_014:0575b07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能決定於甚深法。",
        "from": "X19n0347_014:0575b08_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為二。",
        "from": "X19n0347_014:0575b08_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者所未聞深經。",
        "from": "X19n0347_014:0575b08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞之驚怖生疑。",
        "from": "X19n0347_014:0575b09_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能隨順。",
        "from": "X19n0347_014:0575b09_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀謗不信。",
        "from": "X19n0347_014:0575b09_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作是言。",
        "from": "X19n0347_014:0575b09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我初不聞。",
        "from": "X19n0347_014:0575b10_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從何所來。",
        "from": "X19n0347_014:0575b10_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者若有護持解脫如是深經者。",
        "from": "X19n0347_014:0575b10_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不肯親近供養恭敬。",
        "from": "X19n0347_014:0575b11_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時於中。",
        "from": "X19n0347_014:0575b11_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說其過惡。",
        "from": "X19n0347_014:0575b11_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此二法。",
        "from": "X19n0347_014:0575b12_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是新學菩薩。",
        "from": "X19n0347_014:0575b12_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為自毀傷。",
        "from": "X19n0347_014:0575b12_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能於深法中調伏其心。",
        "from": "X19n0347_014:0575b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒。",
        "from": "X19n0347_014:0575b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有二法。",
        "from": "X19n0347_014:0575b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩雖信解深法。",
        "from": "X19n0347_014:0575b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶自毀傷。",
        "from": "X19n0347_014:0575b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不能得無生法忍。",
        "from": "X19n0347_014:0575b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為二。",
        "from": "X19n0347_014:0575b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者輕慢新學菩薩。",
        "from": "X19n0347_014:0575b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不教誨。",
        "from": "X19n0347_014:0575b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者雖信解深法。",
        "from": "X19n0347_014:0575b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而取相分別。",
        "from": "X19n0347_014:0575b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為二法。",
        "from": "X19n0347_014:0575b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩聞說是已。",
        "from": "X19n0347_014:0575b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言。",
        "from": "X19n0347_014:0575b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊未曾有也。",
        "from": "X19n0347_014:0575b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說。",
        "from": "X19n0347_014:0575b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當遠離如斯之惡。",
        "from": "X19n0347_014:0575b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉持如來無數阿僧祇劫。",
        "from": "X19n0347_014:0575b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所集阿耨多羅三藐三菩提法。",
        "from": "X19n0347_014:0575b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若未來世。",
        "from": "X19n0347_014:0575b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子善女人。",
        "from": "X19n0347_014:0575b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求大乘者。",
        "from": "X19n0347_014:0575b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令手得如是等經。",
        "from": "X19n0347_014:0575b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與其念力。",
        "from": "X19n0347_014:0575b20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使受持讀誦。",
        "from": "X19n0347_014:0575b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他廣說。",
        "from": "X19n0347_014:0575b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X19n0347_014:0575b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若後末世。",
        "from": "X19n0347_014:0575b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能受持讀誦。",
        "from": "X19n0347_014:0575b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他說者。",
        "from": "X19n0347_014:0575b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是彌勒神力之所建立。",
        "from": "X19n0347_014:0575b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉善哉。",
        "from": "X19n0347_014:0575b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒。",
        "from": "X19n0347_014:0575b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所說。",
        "from": "X19n0347_014:0575b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛助爾喜。",
        "from": "X19n0347_014:0575b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是一切菩薩合掌白佛。",
        "from": "X19n0347_014:0575b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等亦於如來滅後。",
        "from": "X19n0347_014:0575b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方國土。",
        "from": "X19n0347_014:0575b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣宣流布。",
        "from": "X19n0347_014:0575c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿耨多羅三藐三菩提法。",
        "from": "X19n0347_014:0575c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當開導諸說法者。",
        "from": "X19n0347_014:0575c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得是經。",
        "from": "X19n0347_014:0575c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王白佛言世尊。",
        "from": "X19n0347_014:0575c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在在處處。",
        "from": "X19n0347_014:0575c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城邑聚落。",
        "from": "X19n0347_014:0575c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山林曠野。",
        "from": "X19n0347_014:0575c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有是經卷。",
        "from": "X19n0347_014:0575c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦解說者。",
        "from": "X19n0347_014:0575c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當率諸官屬。",
        "from": "X19n0347_014:0575c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為聽法故。",
        "from": "X19n0347_014:0575c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣其所。",
        "from": "X19n0347_014:0575c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護其人。",
        "from": "X19n0347_014:0575c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面百由旬。",
        "from": "X19n0347_014:0575c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無伺求得其便者。",
        "from": "X19n0347_014:0575c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時佛告阿難。",
        "from": "X19n0347_014:0575c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持是經。",
        "from": "X19n0347_014:0575c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣宣流布。",
        "from": "X19n0347_014:0575c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難言。",
        "from": "X19n0347_014:0575c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯。",
        "from": "X19n0347_014:0575c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以受持要者。",
        "from": "X19n0347_014:0575c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X19n0347_014:0575c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何名斯經。",
        "from": "X19n0347_014:0575c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言阿難。",
        "from": "X19n0347_014:0575c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是經名為維摩詰所說。",
        "from": "X19n0347_014:0575c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名不可思議解脫法門。",
        "from": "X19n0347_014:0575c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是受持。",
        "from": "X19n0347_014:0575c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已。",
        "from": "X19n0347_014:0575c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者維摩詰。",
        "from": "X19n0347_014:0575c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利。",
