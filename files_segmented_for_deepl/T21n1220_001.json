[
    {
        "source_sentence": "金剛藥叉瞋怒王息災大威神驗",
        "from": "T21n1220_001:0098a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦儀軌",
        "from": "T21n1220_001:0098a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺三藏金剛智奉　詔譯",
        "from": "T21n1220_001:0098a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手虛空庫菩薩摩訶薩。",
        "from": "T21n1220_001:0098a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察天宮諸大菩薩天龍等八部。",
        "from": "T21n1220_001:0098a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而從座起偏袒右肩。",
        "from": "T21n1220_001:0098a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白釋迦牟尼佛言。",
        "from": "T21n1220_001:0098a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃往古昔無量俱胝大劫。",
        "from": "T21n1220_001:0098a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求法故。",
        "from": "T21n1220_001:0098a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流轉器世間。",
        "from": "T21n1220_001:0098a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多有波旬王等令我多退佛法。",
        "from": "T21n1220_001:0098a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願薄伽梵。",
        "from": "T21n1220_001:0098a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽示現權身說大威神驗真言。",
        "from": "T21n1220_001:0098a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言欲現何權身。",
        "from": "T21n1220_001:0098a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰願現大聖藥叉金剛形。",
        "from": "T21n1220_001:0098a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去佛已現。",
        "from": "T21n1220_001:0098a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在佛今現。",
        "from": "T21n1220_001:0098a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來佛當現。",
        "from": "T21n1220_001:0098a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今非過去非現在非未來。",
        "from": "T21n1220_001:0098a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現我自心三昧忿怒。",
        "from": "T21n1220_001:0098a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而守護佛法愍念有情。",
        "from": "T21n1220_001:0098a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉大聖欲護持佛法愍念有情。",
        "from": "T21n1220_001:0098a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者善可現權說大靈驗真言。",
        "from": "T21n1220_001:0098a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與仁加持護念。",
        "from": "T21n1220_001:0098a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱共說真言慈護持者。",
        "from": "T21n1220_001:0098a22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時未起座。",
        "from": "T21n1220_001:0098a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現三面六臂大威忿怒為毒形。",
        "from": "T21n1220_001:0098a23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七珍瓔珞莊身。",
        "from": "T21n1220_001:0098a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身長大無量遍身火焰燃。",
        "from": "T21n1220_001:0098a24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如劫焰烟威猛。",
        "from": "T21n1220_001:0098a25_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顧視四方如獸王象勇猛。",
        "from": "T21n1220_001:0098a25_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言先持行者。",
        "from": "T21n1220_001:0098a26_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧止羽為鈴拳當乳上。",
        "from": "T21n1220_001:0098a26_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以觀羽作劍縛置膝上。",
        "from": "T21n1220_001:0098a27_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以止羽共第一噁字反拳縮引。",
        "from": "T21n1220_001:0098a27_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共第二鑁噁返觀羽。",
        "from": "T21n1220_001:0098a28_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羽即二手如鳳威粕米勢。",
        "from": "T21n1220_001:0098a29_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共第三噁下止上觀拍節出聲。",
        "from": "T21n1220_001:0098a29_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共第四感引二羽磨轉。",
        "from": "T21n1220_001:0098b01_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共五發吒互止觀上下三返以拳纏身。",
        "from": "T21n1220_001:0098b01_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置頂左三轉成辟除。",
        "from": "T21n1220_001:0098b02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右三轉成結界。",
        "from": "T21n1220_001:0098b03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後以印各押四合。",
        "from": "T21n1220_001:0098b03_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋目怒口。",
        "from": "T21n1220_001:0098b04_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚怖畏體誦明真言曰。",
        "from": "T21n1220_001:0098b04_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱南(引一)阿冐迦(引)也(二)尾曩(引)也(三)噁(入四)毘只迦(引)也縛日羅菴(平引五)設咄嚧(二合)鑁噁(引六)達磨薩嚩(引)吒迦爾(若以反)尾伽哩嚀(引)尾伽哩嚀(引七)設咄嚧(二合)吽(引平)噁(入八)訖哩(二合)訖哩(二合九)伽[寧*頁](八)伽[寧*頁](入引九)伽伽[寧*頁](引十)感(入十一)嗚祖(主於反)摩羅[寧*頁](引)設咄嚧吽(引十三)跋折羅跋折羅(十三)多伽[寧*頁](引)也(十四)多伽[寧*頁](引)也(十五)娑發吒(二合十六)娑發吒(二合十七)吽發吒(引二合十八)爾時佛說此真言。",
        "from": "T21n1220_001:0098b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三千大千世界六種震動。",
        "from": "T21n1220_001:0098b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩醯首羅等大自在力王眾所居宮殿。",
        "from": "T21n1220_001:0098b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉散動不得安穩。",
        "from": "T21n1220_001:0098b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉雲集來頂戴藥叉金剛。",
        "from": "T21n1220_001:0098b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願大力尊哀愍。",
        "from": "T21n1220_001:0098b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得我無畏安樂威德。",
        "from": "T21n1220_001:0098b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥叉王白佛言。",
        "from": "T21n1220_001:0098b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等魔王等。",
        "from": "T21n1220_001:0098b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所憂惱如何願何為。",
        "from": "T21n1220_001:0098b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言猶暫令可愍此等得樂。",
        "from": "T21n1220_001:0098b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即許此等已。",
        "from": "T21n1220_001:0098b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時魔王白忿怒王言。",
        "from": "T21n1220_001:0098b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我俱共加神力守護佛法各退散。",
        "from": "T21n1220_001:0098b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有惡人怨結於善人起擾惱。",
        "from": "T21n1220_001:0098b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法師應當畫神驗忿怒王像隨意大少。",
        "from": "T21n1220_001:0098b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作三角壇向人所居方。",
        "from": "T21n1220_001:0098b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作惡心誦上大靈驗真言。",
        "from": "T21n1220_001:0098b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時二十一遍。",
        "from": "T21n1220_001:0098b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿三日已。",
        "from": "T21n1220_001:0098b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人死亡眷屬無殘留。",
        "from": "T21n1220_001:0098b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲甦生取蓮花根擣末。",
        "from": "T21n1220_001:0098b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲三昧真言一日一夜不飲食。",
        "from": "T21n1220_001:0098b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿一百八遍。",
        "from": "T21n1220_001:0098b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即惡人及眷屬甦。",
        "from": "T21n1220_001:0098b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法起歸敬。",
        "from": "T21n1220_001:0098b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽合拳屈進力。",
        "from": "T21n1220_001:0098b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作谷口撥之。",
        "from": "T21n1220_001:0098b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心起大悲。",
        "from": "T21n1220_001:0098b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1220_001:0098b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱南(引)伽[口*尾]婆羅(二合)設咄嚧嗚[合*牛](引平)莎嚩(二合)賀欲得佛法大靈驗。",
        "from": "T21n1220_001:0098b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先像前作四肘方壇。",
        "from": "T21n1220_001:0098c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中安白銅大器。",
        "from": "T21n1220_001:0098c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛滿香水。",
        "from": "T21n1220_001:0098c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從月一日迄十五日。",
        "from": "T21n1220_001:0098c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散花致誠禮敬。",
        "from": "T21n1220_001:0098c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大靈驗真言。",
        "from": "T21n1220_001:0098c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜無間不嘗睡眠。",
        "from": "T21n1220_001:0098c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全堅固精進。",
        "from": "T21n1220_001:0098c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且不安居不安立留。",
        "from": "T21n1220_001:0098c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五日間無斷絕。",
        "from": "T21n1220_001:0098c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而滿十萬遍。",
        "from": "T21n1220_001:0098c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥叉王自現身加持持誦者。",
        "from": "T21n1220_001:0098c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即念憐愍有情故。",
        "from": "T21n1220_001:0098c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現妙形像。",
        "from": "T21n1220_001:0098c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二世菩提何非成就。",
        "from": "T21n1220_001:0098c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即隨喜怖畏被此忿怒尊加持。",
        "from": "T21n1220_001:0098c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時設諸惡人惡魔惡禽獸。",
        "from": "T21n1220_001:0098c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至厭禱蠱術魑魅魍魎惡鬼神等。",
        "from": "T21n1220_001:0098c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起惡心欲惱害行人。",
        "from": "T21n1220_001:0098c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近來向行人住處。",
        "from": "T21n1220_001:0098c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則路中自所殺害。",
        "from": "T21n1220_001:0098c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此神驗卅里外圍繞。",
        "from": "T21n1220_001:0098c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無諸障礙。",
        "from": "T21n1220_001:0098c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又金剛藥叉為施調伏故。",
        "from": "T21n1220_001:0098c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說大威怒王根本大心真言(是呪印甚祕密故。",
        "from": "T21n1220_001:0098c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非表儀軌。",
        "from": "T21n1220_001:0098c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即在別卷。",
        "from": "T21n1220_001:0098c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近阿闍梨。",
        "from": "T21n1220_001:0098c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承事可習學。",
        "from": "T21n1220_001:0098c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚密故)誦此呪時。",
        "from": "T21n1220_001:0098c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔王鬼眾。",
        "from": "T21n1220_001:0098c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得安穩怖懼之事。",
        "from": "T21n1220_001:0098c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大靈驗真言無異。",
        "from": "T21n1220_001:0098c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪印別。",
        "from": "T21n1220_001:0098c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲行此呪。",
        "from": "T21n1220_001:0098c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如聖不動尊念誦儀軌。",
        "from": "T21n1220_001:0098c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作法先右膝著地。",
        "from": "T21n1220_001:0098c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命一切佛菩薩。",
        "from": "T21n1220_001:0098c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔無始生死罪障。",
        "from": "T21n1220_001:0098c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜一切諸佛菩薩所集善根。",
        "from": "T21n1220_001:0098c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請一切如來聖眾。",
        "from": "T21n1220_001:0098c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心供養諸佛即勸請真言曰。",
        "from": "T21n1220_001:0098c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)嚩日囉(二合)藥叉(二合)也多多那伽梨那(二)尾[卄/補]吒(引)吽吽莎嚩(二合)賀(引)澡像真言曰。",
        "from": "T21n1220_001:0098c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵吽娑婆嚕儞也(二合)唅",
        "from": "T21n1220_001:0099a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閼伽真言曰。",
        "from": "T21n1220_001:0099a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿頗羅(二合)底[寧*頁](引)吽奉座真言曰。",
        "from": "T21n1220_001:0099a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾迦尼左羅尼(二)噁(入)",
        "from": "T21n1220_001:0099a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著衣瓔珞真言曰。",
        "from": "T21n1220_001:0099a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵矩尼矩尼薩矩尼(引)也伊(牟)獻香花燈塗真言曰。",
        "from": "T21n1220_001:0099a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵摩尼(引)娜伽伽娜三摩三摩矩囐提噁莎嚩(二合)賀讚嘆藥叉金剛曰。",
        "from": "T21n1220_001:0099a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)噯咄羅藥乞叉嚩日囉(二合)底哩[寧*頁]尾[卄/補]梨(二合)賀[寧*頁](引上)嚩日囉(二合)摩訶藥乞叉(上)藥乞叉(上)婆[寧*頁]伽[寧*頁]也(引平)噁(短)生歡喜悅意。",
        "from": "T21n1220_001:0099a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可誦此讚嘆偈。",
        "from": "T21n1220_001:0099a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善哉善哉噁藥叉　　憐愍有情我等類　無倫比像化含靈　　何者寧為何惱法加持數珠真言曰。",
        "from": "T21n1220_001:0099a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日囉豎尼",
        "from": "T21n1220_001:0099a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉送真言曰。",
        "from": "T21n1220_001:0099a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾訖灑(二合)耶吽噁(入)",
        "from": "T21n1220_001:0099a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上所說十種供養讚嘆等真言。",
        "from": "T21n1220_001:0099a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆持用三股金剛杵。",
        "from": "T21n1220_001:0099a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽中受鈷當心誦一一真言。",
        "from": "T21n1220_001:0099a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各應想流出威德。",
        "from": "T21n1220_001:0099a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執持金剛鈷。",
        "from": "T21n1220_001:0099a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1220_001:0099a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)參[口*犮]縛日羅(二合)醯[寧*頁]尾吠縛日羅(二合)噁若欲一切障難解脫。",
        "from": "T21n1220_001:0099a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合丸藥二兩。",
        "from": "T21n1220_001:0099a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各把左右掌。",
        "from": "T21n1220_001:0099a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踞著者而誦大靈驗真言七遍。",
        "from": "T21n1220_001:0099a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持著者塗背後。",
        "from": "T21n1220_001:0099a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時解脫一切障難一切口舌橫死短命等。",
        "from": "T21n1220_001:0099b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若又欲急殺惡人。",
        "from": "T21n1220_001:0099b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫人像姓名置調伏壇。",
        "from": "T21n1220_001:0099b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最初角削竹釘穿立腹中。",
        "from": "T21n1220_001:0099b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大靈驗真言。",
        "from": "T21n1220_001:0099b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以嚗噁卒怒心。",
        "from": "T21n1220_001:0099b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪一百八遍。",
        "from": "T21n1220_001:0099b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍一打便斃。",
        "from": "T21n1220_001:0099b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲急縛惡人令歸佛道。",
        "from": "T21n1220_001:0099b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以惡心誦大呪三遍。",
        "from": "T21n1220_001:0099b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取黑石共後發吒。",
        "from": "T21n1220_001:0099b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羽內迴之自然被縛。",
        "from": "T21n1220_001:0099b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲解免者。",
        "from": "T21n1220_001:0099b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大慈三昧明三遍。",
        "from": "T21n1220_001:0099b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得本心即言。",
        "from": "T21n1220_001:0099b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今已後歸依佛道。",
        "from": "T21n1220_001:0099b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不生起邪見不善心。",
        "from": "T21n1220_001:0099b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲好女自得及令他得。",
        "from": "T21n1220_001:0099b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "松皮書好女姓名。",
        "from": "T21n1220_001:0099b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫像前誦大慈三昧真言。",
        "from": "T21n1220_001:0099b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七遍啟白威怒王。",
        "from": "T21n1220_001:0099b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是每日三時繫念。",
        "from": "T21n1220_001:0099b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白啟威怒王慈愍故。",
        "from": "T21n1220_001:0099b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自乘好女意。",
        "from": "T21n1220_001:0099b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令生他心自從宮宅出跉來。",
        "from": "T21n1220_001:0099b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛著夫人。",
        "from": "T21n1220_001:0099b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無他念。",
        "from": "T21n1220_001:0099b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧他妻非他夫。",
        "from": "T21n1220_001:0099b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫厭妻妻厭夫。",
        "from": "T21n1220_001:0099b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心一向歸後夫婦妻。",
        "from": "T21n1220_001:0099b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱常發菩提心。",
        "from": "T21n1220_001:0099b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒教化夫人矣。",
        "from": "T21n1220_001:0099b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲得官位。",
        "from": "T21n1220_001:0099b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像前至心燒香。",
        "from": "T21n1220_001:0099b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設種種供養。",
        "from": "T21n1220_001:0099b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三日三夜乃至七日七夜間。",
        "from": "T21n1220_001:0099b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可誦大慈三昧。",
        "from": "T21n1220_001:0099b17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言祈願。",
        "from": "T21n1220_001:0099b17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所願無一不成。",
        "from": "T21n1220_001:0099b18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則作增益法。",
        "from": "T21n1220_001:0099b18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自成就唯修行法時。",
        "from": "T21n1220_001:0099b18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨念向望方。",
        "from": "T21n1220_001:0099b19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細示方如護摩壇作法已。",
        "from": "T21n1220_001:0099b19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲出道場誦此真言。",
        "from": "T21n1220_001:0099b20_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發遣聖眾。",
        "from": "T21n1220_001:0099b20_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1220_001:0099b20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合)藥乞叉(二合)底那底他也(二合)毘吽吽噁說此等種雜威德瞋怒法時。",
        "from": "T21n1220_001:0099b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔怨調伏加衛護。",
        "from": "T21n1220_001:0099b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願護持佛法。",
        "from": "T21n1220_001:0099b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故行者修習時。",
        "from": "T21n1220_001:0099b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎莫起惡心數損他。",
        "from": "T21n1220_001:0099b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有智人善悟是祕道。",
        "from": "T21n1220_001:0099b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒亂不得誦呪。",
        "from": "T21n1220_001:0099b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除耎和忍辱人。",
        "from": "T21n1220_001:0099b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年滿四十而得自順順他。",
        "from": "T21n1220_001:0099b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者若幼稚人行好習誦時不得解脫道。",
        "from": "T21n1220_001:0099b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨自損損他深過。",
        "from": "T21n1220_001:0099b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者多應有慈悲利益一切有情界。",
        "from": "T21n1220_001:0099b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出堂任意而轉讀大乘。",
        "from": "T21n1220_001:0099b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住不退轉地。",
        "from": "T21n1220_001:0099c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藥叉念誦儀軌",
        "from": "T21n1220_001:0099c02_0",
        "context_with_next_sentence": false
    }
]