[
    {
        "source_sentence": "居士傳十四",
        "from": "X88n1646_014:0210c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李樊牛于商鄭馬陸李傳",
        "from": "X88n1646_014:0210c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李山龍馮翊人。",
        "from": "X88n1646_014:0210c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐初官監門校尉。",
        "from": "X88n1646_014:0210c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武德中暴亡。",
        "from": "X88n1646_014:0210c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而胸微熱。",
        "from": "X88n1646_014:0210c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家人伺之。",
        "from": "X88n1646_014:0210c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋蘇。",
        "from": "X88n1646_014:0210c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自言死後有吏攝至一王府。",
        "from": "X88n1646_014:0210c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庭中有囚數千。",
        "from": "X88n1646_014:0210c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆枷鎖北面立。",
        "from": "X88n1646_014:0210c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王坐高牀。",
        "from": "X88n1646_014:0210c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍衛甚盛。",
        "from": "X88n1646_014:0210c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山龍既至階下。",
        "from": "X88n1646_014:0210c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王問曰。",
        "from": "X88n1646_014:0210c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝平生作何福業。",
        "from": "X88n1646_014:0210c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對言。",
        "from": "X88n1646_014:0210c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄉人每設齋。",
        "from": "X88n1646_014:0210c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒施物助之。",
        "from": "X88n1646_014:0210c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又問。",
        "from": "X88n1646_014:0210c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝身作何善業。",
        "from": "X88n1646_014:0210c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對言誦法華經日兩卷。",
        "from": "X88n1646_014:0210c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰大善。",
        "from": "X88n1646_014:0210c21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即請升階上高座。",
        "from": "X88n1646_014:0210c21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王移座對之。",
        "from": "X88n1646_014:0210c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山龍開經曰。",
        "from": "X88n1646_014:0210c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法蓮華經序品第一。",
        "from": "X88n1646_014:0210c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王便請下座。",
        "from": "X88n1646_014:0210c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山龍下。",
        "from": "X88n1646_014:0210c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則庭中諸囚忽已不見。",
        "from": "X88n1646_014:0210c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X88n1646_014:0210c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君誦經之福。",
        "from": "X88n1646_014:0210c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非唯自利。",
        "from": "X88n1646_014:0210c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾囚聞經皆已獲免。",
        "from": "X88n1646_014:0210c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不善哉。",
        "from": "X88n1646_014:0210c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今放君還。",
        "from": "X88n1646_014:0210c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂吏曰。",
        "from": "X88n1646_014:0210c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可將此人歷觀諸獄。",
        "from": "X88n1646_014:0211a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吏引東行百餘步。",
        "from": "X88n1646_014:0211a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過一鐵城云是罪人所居。",
        "from": "X88n1646_014:0211a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山龍憫然稱南無佛。",
        "from": "X88n1646_014:0211a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復行見一大鑊。",
        "from": "X88n1646_014:0211a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火猛湯沸。",
        "from": "X88n1646_014:0211a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旁有二人坐臥。",
        "from": "X88n1646_014:0211a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山龍問之。",
        "from": "X88n1646_014:0211a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對言。",
        "from": "X88n1646_014:0211a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等罪報得此鑊湯。",
        "from": "X88n1646_014:0211a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙賢者稱南無佛。",
        "from": "X88n1646_014:0211a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故獄中囚得一日休息耳。",
        "from": "X88n1646_014:0211a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山龍又稱南無佛便歸家。",
        "from": "X88n1646_014:0211a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "距歿時已七日矣。",
        "from": "X88n1646_014:0211a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同時有史阿誓者。",
        "from": "X88n1646_014:0211a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居郊南福水之陰。",
        "from": "X88n1646_014:0211a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦法華經行住不廢。",
        "from": "X88n1646_014:0211a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充邑令史。",
        "from": "X88n1646_014:0211a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入城郭必由小徑。",
        "from": "X88n1646_014:0211a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "低氣怡顏緣念相續。",
        "from": "X88n1646_014:0211a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平生未甞乘馬。",
        "from": "X88n1646_014:0211a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以依經云哀愍一切故也。",
        "from": "X88n1646_014:0211a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病終時香聞里許。",
        "from": "X88n1646_014:0211a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十年妻死。",
        "from": "X88n1646_014:0211a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合葬啟之。",
        "from": "X88n1646_014:0211a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌本如生。",
        "from": "X88n1646_014:0211a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有薛嚴者。",
        "from": "X88n1646_014:0211a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官忠州司馬。",
        "from": "X88n1646_014:0211a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長齋奉佛。",
        "from": "X88n1646_014:0211a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日誦金剛經三十遍。",
        "from": "X88n1646_014:0211a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至年七十二將終。",
        "from": "X88n1646_014:0211a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢盖自空而下。",
        "from": "X88n1646_014:0211a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天樂盈耳。",
        "from": "X88n1646_014:0211a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其妻見嚴冉冉昇空而去。",
        "from": "X88n1646_014:0211a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "室中異香芬烈。",
        "from": "X88n1646_014:0211a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家人莫不聞之(冥報記．法苑珠林．續高僧傳．報應記○阿誓或作呵擔)。",
        "from": "X88n1646_014:0211a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樊元智安定人。",
        "from": "X88n1646_014:0211a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弱齡好道。",
        "from": "X88n1646_014:0211a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居京城南。",
        "from": "X88n1646_014:0211a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依杜順和尚。",
        "from": "X88n1646_014:0211a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杜順令習華嚴為業。",
        "from": "X88n1646_014:0211a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍依經修普賢行。",
        "from": "X88n1646_014:0211a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每誦經。",
        "from": "X88n1646_014:0211a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口中頻獲舍利。",
        "from": "X88n1646_014:0211a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後數百粒。",
        "from": "X88n1646_014:0211a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有時夜誦。",
        "from": "X88n1646_014:0211a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口放光明照及四十餘里。",
        "from": "X88n1646_014:0211a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近驚異。",
        "from": "X88n1646_014:0211a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年九十二無疾而終。",
        "from": "X88n1646_014:0211a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茶毗時牙齒變為舍利。",
        "from": "X88n1646_014:0211a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得百餘粒。",
        "from": "X88n1646_014:0211a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉放光明。",
        "from": "X88n1646_014:0211a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數日不歇。",
        "from": "X88n1646_014:0211a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧俗建塔以為供養(華嚴經疏鈔．華嚴感應傳)。",
        "from": "X88n1646_014:0211a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛思遠名騰。",
        "from": "X88n1646_014:0211a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不詳其里居。",
        "from": "X88n1646_014:0211a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少挺異操。",
        "from": "X88n1646_014:0211a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沉靜寡言。",
        "from": "X88n1646_014:0211a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "早歲明經擢第。",
        "from": "X88n1646_014:0211a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天后時以舅裴炎得罪。",
        "from": "X88n1646_014:0211a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貶為牂牁建安丞。",
        "from": "X88n1646_014:0211a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中丞崔察欲害之。",
        "from": "X88n1646_014:0211a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有異人授以神呪得免。",
        "from": "X88n1646_014:0211a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂篤信佛道。",
        "from": "X88n1646_014:0211a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖已婚宦。",
        "from": "X88n1646_014:0211a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如守戒僧。",
        "from": "X88n1646_014:0211a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口不妄談。",
        "from": "X88n1646_014:0211a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目不妄視。",
        "from": "X88n1646_014:0211a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在牂牁大布釋教。",
        "from": "X88n1646_014:0211a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置道場數處。",
        "from": "X88n1646_014:0211a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夷人皆漬其化。",
        "from": "X88n1646_014:0211a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居三年。",
        "from": "X88n1646_014:0211a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊周獠反。",
        "from": "X88n1646_014:0211a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉入牂牁。",
        "from": "X88n1646_014:0211b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近皆殺。",
        "from": "X88n1646_014:0211b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長吏應之。",
        "from": "X88n1646_014:0211b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建安大豪起兵劫。",
        "from": "X88n1646_014:0211b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思遠坐樹下。",
        "from": "X88n1646_014:0211b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將戮之。",
        "from": "X88n1646_014:0211b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有旁人持刀斬守者頭。",
        "from": "X88n1646_014:0211b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置思遠籠中舁而走。",
        "from": "X88n1646_014:0211b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事平還視事。",
        "from": "X88n1646_014:0211b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後宰數邑。",
        "from": "X88n1646_014:0211b03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆計日受俸。",
        "from": "X88n1646_014:0211b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人服其清。",
        "from": "X88n1646_014:0211b04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋棄官。",
        "from": "X88n1646_014:0211b04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精心釋教以終其身(紀聞)。",
        "from": "X88n1646_014:0211b04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于昶不詳其里居。",
        "from": "X88n1646_014:0211b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天后朝任并州錄事。",
        "from": "X88n1646_014:0211b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝決曹務。",
        "from": "X88n1646_014:0211b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜判冥司。",
        "from": "X88n1646_014:0211b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每知災咎陰為之備凡六年。",
        "from": "X88n1646_014:0211b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丁母憂。",
        "from": "X88n1646_014:0211b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持金剛經日以為課。",
        "from": "X88n1646_014:0211b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不復為冥吏矣。",
        "from": "X88n1646_014:0211b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年八十四將終。",
        "from": "X88n1646_014:0211b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽聞奇香。",
        "from": "X88n1646_014:0211b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽謂左右曰。",
        "from": "X88n1646_014:0211b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方聖人來迎我也。",
        "from": "X88n1646_014:0211b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即向西連稱佛名而逝(報應記)。",
        "from": "X88n1646_014:0211b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "商居士遺其名。",
        "from": "X88n1646_014:0211b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三河縣人。",
        "from": "X88n1646_014:0211b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年七歲能通佛書。",
        "from": "X88n1646_014:0211b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後廬於縣西田中。",
        "from": "X88n1646_014:0211b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛書數百千卷。",
        "from": "X88n1646_014:0211b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱誦未甞一日廢。",
        "from": "X88n1646_014:0211b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從而師者百輩。",
        "from": "X88n1646_014:0211b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每行其骨體珊然若戞玉之音。",
        "from": "X88n1646_014:0211b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年九十餘。",
        "from": "X88n1646_014:0211b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日湯沐具冠帶悉召門弟子會食告之曰。",
        "from": "X88n1646_014:0211b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾旦暮且死。",
        "from": "X88n1646_014:0211b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以火燼吾尸。",
        "from": "X88n1646_014:0211b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎無逆吾旨。",
        "from": "X88n1646_014:0211b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夕坐逝。",
        "from": "X88n1646_014:0211b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後三日焚之。",
        "from": "X88n1646_014:0211b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視其骨若鈎鎖之相屬也。",
        "from": "X88n1646_014:0211b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是里人建塔以奉焉(宣室志)。",
        "from": "X88n1646_014:0211b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄭牧卿滎陽人。",
        "from": "X88n1646_014:0211b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉家修淨業。",
        "from": "X88n1646_014:0211b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開元中病篤。",
        "from": "X88n1646_014:0211b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或勸進魚肉。",
        "from": "X88n1646_014:0211b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許。",
        "from": "X88n1646_014:0211b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執香爐一心西向。",
        "from": "X88n1646_014:0211b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽聞異香蔚然。",
        "from": "X88n1646_014:0211b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂逝。",
        "from": "X88n1646_014:0211b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其舅尚書蘇頲。",
        "from": "X88n1646_014:0211b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢寶蓮華開。",
        "from": "X88n1646_014:0211b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牧卿坐其上(佛祖統紀)。",
        "from": "X88n1646_014:0211b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬子雲不詳其里居。",
        "from": "X88n1646_014:0211b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉孝廉。",
        "from": "X88n1646_014:0211b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任涇縣尉。",
        "from": "X88n1646_014:0211b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充本郡租綱。",
        "from": "X88n1646_014:0211b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "督運入京。",
        "from": "X88n1646_014:0211b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舟溺沉米萬斛。",
        "from": "X88n1646_014:0211b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫獄中。",
        "from": "X88n1646_014:0211b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子雲專心念佛。",
        "from": "X88n1646_014:0211b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱五年遇赦得出。",
        "from": "X88n1646_014:0211b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱南陵山寺中。",
        "from": "X88n1646_014:0211b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持一食齋。",
        "from": "X88n1646_014:0211b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天寶十年卒於涇先。",
        "from": "X88n1646_014:0211b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂人曰。",
        "from": "X88n1646_014:0211b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾因數奇。",
        "from": "X88n1646_014:0211b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂精持內教。",
        "from": "X88n1646_014:0211b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今西方業成。",
        "from": "X88n1646_014:0211b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當往生安樂世界爾。",
        "from": "X88n1646_014:0211b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日沐浴衣新衣。",
        "from": "X88n1646_014:0211b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐合掌。",
        "from": "X88n1646_014:0211b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄而異香滿室。",
        "from": "X88n1646_014:0211c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子雲云。",
        "from": "X88n1646_014:0211c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛來矣。",
        "from": "X88n1646_014:0211c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂逝(紀聞)。",
        "from": "X88n1646_014:0211c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陸康成不詳其里居。",
        "from": "X88n1646_014:0211c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官京兆法曹。",
        "from": "X88n1646_014:0211c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公退。",
        "from": "X88n1646_014:0211c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽見已故吏抱案立於前。",
        "from": "X88n1646_014:0211c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康成驚曰。",
        "from": "X88n1646_014:0211c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾已下世。",
        "from": "X88n1646_014:0211c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何得來。",
        "from": "X88n1646_014:0211c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X88n1646_014:0211c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此幽府文簿。",
        "from": "X88n1646_014:0211c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來年兵刃死者。",
        "from": "X88n1646_014:0211c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康成曰。",
        "from": "X88n1646_014:0211c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得毋有我乎。",
        "from": "X88n1646_014:0211c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吏檢示之。",
        "from": "X88n1646_014:0211c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康成瞿然曰奈何。",
        "from": "X88n1646_014:0211c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吏曰惟金剛經可託。",
        "from": "X88n1646_014:0211c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特以報公。",
        "from": "X88n1646_014:0211c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖不見。",
        "from": "X88n1646_014:0211c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康成遂取金剛經誦之。",
        "from": "X88n1646_014:0211c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日數十遍。",
        "from": "X88n1646_014:0211c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明年朱泚反。",
        "from": "X88n1646_014:0211c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "署為御史。",
        "from": "X88n1646_014:0211c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康成叱泚曰。",
        "from": "X88n1646_014:0211c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賊臣敢干國士。",
        "from": "X88n1646_014:0211c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泚怒令數百騎環而射之。",
        "from": "X88n1646_014:0211c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康成默念金剛經。",
        "from": "X88n1646_014:0211c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矢不能入。",
        "from": "X88n1646_014:0211c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂捨之。",
        "from": "X88n1646_014:0211c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康成去之終南山老焉(報應記)。",
        "from": "X88n1646_014:0211c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李知遙長安人。",
        "from": "X88n1646_014:0211c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "篤志淨土。",
        "from": "X88n1646_014:0211c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為五會念佛。",
        "from": "X88n1646_014:0211c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導諸眾信。",
        "from": "X88n1646_014:0211c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚得疾。",
        "from": "X88n1646_014:0211c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽云。",
        "from": "X88n1646_014:0211c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚來也。",
        "from": "X88n1646_014:0211c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗漱著衣然香爐中。",
        "from": "X88n1646_014:0211c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出堂頂禮。",
        "from": "X88n1646_014:0211c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞空中說偈云。",
        "from": "X88n1646_014:0211c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報汝李知遙。",
        "from": "X88n1646_014:0211c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功成果自招。",
        "from": "X88n1646_014:0211c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引君生淨土。",
        "from": "X88n1646_014:0211c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將爾上金橋。",
        "from": "X88n1646_014:0211c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却就牀坐。",
        "from": "X88n1646_014:0211c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泊然而化。",
        "from": "X88n1646_014:0211c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異香滿室。",
        "from": "X88n1646_014:0211c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾共聞之(淨土文)。",
        "from": "X88n1646_014:0211c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_014:0211c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予觀百家所紀載。",
        "from": "X88n1646_014:0211c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其言感應事詳矣。",
        "from": "X88n1646_014:0211c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而或者以為異。",
        "from": "X88n1646_014:0211c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫萬法一心。",
        "from": "X88n1646_014:0211c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自感自應。",
        "from": "X88n1646_014:0211c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如食充飢。",
        "from": "X88n1646_014:0211c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如飲止渴。",
        "from": "X88n1646_014:0211c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾足異乎。",
        "from": "X88n1646_014:0211c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀山龍以下諸君事。",
        "from": "X88n1646_014:0211c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固知心力不可思議矣。",
        "from": "X88n1646_014:0211c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與之言佛而不信者。",
        "from": "X88n1646_014:0211c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其亦不自信其心者哉。",
        "from": "X88n1646_014:0211c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_014:0211c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心光為業力所障。",
        "from": "X88n1646_014:0211c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有地獄等事。",
        "from": "X88n1646_014:0211c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業力為心光所破。",
        "from": "X88n1646_014:0211c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則地獄等事一時解釋矣。",
        "from": "X88n1646_014:0211c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精心持佛語。",
        "from": "X88n1646_014:0211c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之心光自然發露。",
        "from": "X88n1646_014:0211c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能救一切苦矣。",
        "from": "X88n1646_014:0211c21_7",
        "context_with_next_sentence": true
    },
    {
