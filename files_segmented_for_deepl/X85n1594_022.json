[
    {
        "source_sentence": "佛祖綱目卷第二十二(收字號)",
        "from": "X85n1594_022:0584b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(漢靈帝中平元年起)庚午(獻帝初平元年)甲戌(漢改興平)丙子(漢改建安)庚子(魏高祖黃初元年)辛丑(蜀漢昭烈章武元年)壬寅(吳太祖黃武元年)癸卯(漢後主建興元年)丁未(魏明帝太和元年)己酉(吳改黃龍)壬子(吳改嘉禾)癸丑(魏改青龍)丁巳(魏改景初)戊午(漢改延熈吳改赤烏)庚申(魏改正始)癸亥(漢後主延熈六年。",
        "from": "X85n1594_022:0584b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魏正始四年。",
        "from": "X85n1594_022:0584b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳赤烏六年止)　　　　魏　曹姓。",
        "from": "X85n1594_022:0584b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五主。",
        "from": "X85n1594_022:0584b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共四十五年　三國　蜀漢劉姓。",
        "from": "X85n1594_022:0584b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二主。",
        "from": "X85n1594_022:0584b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共四十三年　　　　吳　孫姓。",
        "from": "X85n1594_022:0584b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四主。",
        "from": "X85n1594_022:0584b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共五十九年漢初平年中。",
        "from": "X85n1594_022:0584b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有牟子。",
        "from": "X85n1594_022:0584b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未詳名字。",
        "from": "X85n1594_022:0584b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "避世隱居。",
        "from": "X85n1594_022:0584b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銳志佛道。",
        "from": "X85n1594_022:0584b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著理惑三十七篇。",
        "from": "X85n1594_022:0584b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極其推崇。",
        "from": "X85n1594_022:0584b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁僧祐律師。",
        "from": "X85n1594_022:0584b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收之弘明集○陳思王曹植。",
        "from": "X85n1594_022:0584b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字子建。",
        "from": "X85n1594_022:0584b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魏武帝操之中子。",
        "from": "X85n1594_022:0584b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十歲誦詩書十餘萬言。",
        "from": "X85n1594_022:0584b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善屬文。",
        "from": "X85n1594_022:0584b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邯鄲淳見而駭嘆。",
        "from": "X85n1594_022:0584b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱為天人。",
        "from": "X85n1594_022:0584b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "植每讀佛經。",
        "from": "X85n1594_022:0584b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留連嗟玩。",
        "from": "X85n1594_022:0584b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為至道之宗。",
        "from": "X85n1594_022:0584b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉讀七聲。",
        "from": "X85n1594_022:0584b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "升降曲折。",
        "from": "X85n1594_022:0584b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世皆則之。",
        "from": "X85n1594_022:0584b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊漁山。",
        "from": "X85n1594_022:0584b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞有聲特異。",
        "from": "X85n1594_022:0584b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清颺哀婉。",
        "from": "X85n1594_022:0584b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因倣之為梵唄。",
        "from": "X85n1594_022:0584b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然不好黃老。",
        "from": "X85n1594_022:0584b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞著辨道論。",
        "from": "X85n1594_022:0584b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以見意。",
        "from": "X85n1594_022:0584b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(己丑)二十三祖鶴勒那傳法師子比丘鶴勒那。",
        "from": "X85n1594_022:0584b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(勒即梵語。",
        "from": "X85n1594_022:0584b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鶴即華言)月支國人。",
        "from": "X85n1594_022:0584b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓婆羅門。",
        "from": "X85n1594_022:0584b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父千勝。",
        "from": "X85n1594_022:0584b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母金光。",
        "from": "X85n1594_022:0584b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以求子禱於七佛金幢。",
        "from": "X85n1594_022:0584b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢須彌頂有神童。",
        "from": "X85n1594_022:0584b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持金環云。",
        "from": "X85n1594_022:0584b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我來。",
        "from": "X85n1594_022:0584c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及誕。",
        "from": "X85n1594_022:0584c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而天雨花。",
        "from": "X85n1594_022:0584c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國王以其有神徵。",
        "from": "X85n1594_022:0584c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳於宮中。",
        "from": "X85n1594_022:0584c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宮嬪育之。",
        "from": "X85n1594_022:0584c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即分身各為其子。",
        "from": "X85n1594_022:0584c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有千許。",
        "from": "X85n1594_022:0584c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X85n1594_022:0584c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無儲嗣。",
        "from": "X85n1594_022:0584c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將育爾為太子。",
        "from": "X85n1594_022:0584c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者千身。",
        "from": "X85n1594_022:0584c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰為正子哉。",
        "from": "X85n1594_022:0584c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言已。",
        "from": "X85n1594_022:0584c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一子放光。",
        "from": "X85n1594_022:0584c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽皆不見。",
        "from": "X85n1594_022:0584c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而見於其父母家。",
        "from": "X85n1594_022:0584c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王莫能如何。",
        "from": "X85n1594_022:0584c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七歲覩民間淫祠。",
        "from": "X85n1594_022:0584c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡其宰殺。",
        "from": "X85n1594_022:0584c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入廟叱之。",
        "from": "X85n1594_022:0584c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廟貌遂隳。",
        "from": "X85n1594_022:0584c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄉黨稱之為聖子。",
        "from": "X85n1594_022:0584c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至年二十二出家。",
        "from": "X85n1594_022:0584c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棲一林間九白。",
        "from": "X85n1594_022:0584c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦大般若。",
        "from": "X85n1594_022:0584c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感鶴眾相隨。",
        "from": "X85n1594_022:0584c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十得法。",
        "from": "X85n1594_022:0584c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行化至中印度。",
        "from": "X85n1594_022:0584c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為其王無畏海說法。",
        "from": "X85n1594_022:0584c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感日月天子禮拜其前。",
        "from": "X85n1594_022:0584c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王目見之。",
        "from": "X85n1594_022:0584c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃問勒那。",
        "from": "X85n1594_022:0584c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月國土。",
        "from": "X85n1594_022:0584c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總有多少。",
        "from": "X85n1594_022:0584c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那曰。",
        "from": "X85n1594_022:0584c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千釋迦所化世界。",
        "from": "X85n1594_022:0584c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有百億迷盧日月。",
        "from": "X85n1594_022:0584c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若廣說。",
        "from": "X85n1594_022:0584c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即不能盡。",
        "from": "X85n1594_022:0584c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王聞忻然。",
        "from": "X85n1594_022:0584c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時勒那演無上道。",
        "from": "X85n1594_022:0584c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度有緣眾。",
        "from": "X85n1594_022:0584c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有上足龍子。",
        "from": "X85n1594_022:0584c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蚤夭。",
        "from": "X85n1594_022:0584c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其兄師子博通強記。",
        "from": "X85n1594_022:0584c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事婆羅門。",
        "from": "X85n1594_022:0584c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將塟龍子。",
        "from": "X85n1594_022:0584c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而眾力舉其柩。",
        "from": "X85n1594_022:0584c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能動。",
        "from": "X85n1594_022:0584c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那謂師子曰。",
        "from": "X85n1594_022:0584c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔汝弟欲冥福汝。",
        "from": "X85n1594_022:0584c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而塑一佛像。",
        "from": "X85n1594_022:0584c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝方信婆羅門。",
        "from": "X85n1594_022:0584c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投於地。",
        "from": "X85n1594_022:0584c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今汝弟雖謝世。",
        "from": "X85n1594_022:0584c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶欲感悟汝。",
        "from": "X85n1594_022:0584c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故示斯異。",
        "from": "X85n1594_022:0584c14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝亟供像。",
        "from": "X85n1594_022:0584c15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柩斯舉矣。",
        "from": "X85n1594_022:0584c15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子奉命。",
        "from": "X85n1594_022:0584c15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而柩舉。",
        "from": "X85n1594_022:0584c15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未幾婆羅門師死。",
        "from": "X85n1594_022:0584c15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子乃歸依勒那。",
        "from": "X85n1594_022:0584c16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X85n1594_022:0584c16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲求道。",
        "from": "X85n1594_022:0584c16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何用心。",
        "from": "X85n1594_022:0584c16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那曰。",
        "from": "X85n1594_022:0584c17_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲求道。",
        "from": "X85n1594_022:0584c17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所用心。",
        "from": "X85n1594_022:0584c17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰既無用心。",
        "from": "X85n1594_022:0584c17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰作佛事。",
        "from": "X85n1594_022:0584c17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那曰。",
        "from": "X85n1594_022:0584c18_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝若有用。",
        "from": "X85n1594_022:0584c18_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即非功德。",
        "from": "X85n1594_022:0584c18_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝若無作。",
        "from": "X85n1594_022:0584c18_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是佛事。",
        "from": "X85n1594_022:0584c18_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "X85n1594_022:0584c19_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所作功德。",
        "from": "X85n1594_022:0584c19_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無我所故。",
        "from": "X85n1594_022:0584c19_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子聞是語已。",
        "from": "X85n1594_022:0584c19_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入佛慧。",
        "from": "X85n1594_022:0584c19_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時勒那忽指東北。",
        "from": "X85n1594_022:0584c20_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X85n1594_022:0584c20_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是何氣象。",
        "from": "X85n1594_022:0584c20_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_022:0584c20_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見氣如白虹。",
        "from": "X85n1594_022:0584c20_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貫乎天地。",
        "from": "X85n1594_022:0584c21_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有黑氣五道。",
        "from": "X85n1594_022:0584c21_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫亘其中。",
        "from": "X85n1594_022:0584c21_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那曰。",
        "from": "X85n1594_022:0584c21_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其兆云何。",
        "from": "X85n1594_022:0584c22_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰莫可知矣。",
        "from": "X85n1594_022:0584c22_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那曰。",
        "from": "X85n1594_022:0584c22_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾滅後五十年。",
        "from": "X85n1594_022:0584c22_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北天竺國。",
        "from": "X85n1594_022:0584c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當有難起。",
        "from": "X85n1594_022:0584c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嬰在汝身。",
        "from": "X85n1594_022:0584c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾將滅已。",
        "from": "X85n1594_022:0584c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以法眼。",
        "from": "X85n1594_022:0584c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑於汝。",
        "from": "X85n1594_022:0584c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善自護持。",
        "from": "X85n1594_022:0584c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃說偈曰。",
        "from": "X85n1594_022:0584c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "認得心性時。",
        "from": "X85n1594_022:0584c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可說不思議。",
        "from": "X85n1594_022:0584c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了無可得。",
        "from": "X85n1594_022:0585a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得時不說知。",
        "from": "X85n1594_022:0585a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子比丘聞偈欣愜。",
        "from": "X85n1594_022:0585a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然未曉將罹何難。",
        "from": "X85n1594_022:0585a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那乃密示之。",
        "from": "X85n1594_022:0585a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖。",
        "from": "X85n1594_022:0585a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現十八變而歸寂。",
        "from": "X85n1594_022:0585a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍維。",
        "from": "X85n1594_022:0585a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各欲分舍利興塔。",
        "from": "X85n1594_022:0585a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒那復現形空中。",
        "from": "X85n1594_022:0585a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈曰。",
        "from": "X85n1594_022:0585a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法一切法。",
        "from": "X85n1594_022:0585a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切一法攝。",
        "from": "X85n1594_022:0585a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾身非有無。",
        "from": "X85n1594_022:0585a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何分一切塔。",
        "from": "X85n1594_022:0585a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾聞偈。",
        "from": "X85n1594_022:0585a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂不復分。",
        "from": "X85n1594_022:0585a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就馱都場而建塔。",
        "from": "X85n1594_022:0585a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土後漢獻帝二十年己丑也。",
        "from": "X85n1594_022:0585a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(辛丑)三藏康僧會行化至吳",
        "from": "X85n1594_022:0585a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康居國大丞相之子。",
        "from": "X85n1594_022:0585a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓康。",
        "from": "X85n1594_022:0585a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名僧會。",
        "from": "X85n1594_022:0585a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄俗歸緇。",
        "from": "X85n1594_022:0585a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊化至建康。",
        "from": "X85n1594_022:0585a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "營立茅茨。",
        "from": "X85n1594_022:0585a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設像行道。",
        "from": "X85n1594_022:0585a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳人以為妖。",
        "from": "X85n1594_022:0585a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳主孫權聞之曰。",
        "from": "X85n1594_022:0585a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是漢明帝所夢。",
        "from": "X85n1594_022:0585a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道之遺風耶。",
        "from": "X85n1594_022:0585a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔至。",
        "from": "X85n1594_022:0585a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問狀。",
        "from": "X85n1594_022:0585a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會廣陳如來之化因曰。",
        "from": "X85n1594_022:0585a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來化已千年。",
        "from": "X85n1594_022:0585a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然靈骨舍利。",
        "from": "X85n1594_022:0585a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神應無方。",
        "from": "X85n1594_022:0585a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔育王奉為八萬四千塔。",
        "from": "X85n1594_022:0585a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此遺化也。",
        "from": "X85n1594_022:0585a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權曰。",
        "from": "X85n1594_022:0585a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利可得。",
        "from": "X85n1594_022:0585a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為塔之。",
        "from": "X85n1594_022:0585a13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟其無驗。",
        "from": "X85n1594_022:0585a13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國有常刑。",
        "from": "X85n1594_022:0585a13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會請期七日。",
        "from": "X85n1594_022:0585a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂其屬曰。",
        "from": "X85n1594_022:0585a13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法廢興。",
        "from": "X85n1594_022:0585a14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在此一舉。",
        "from": "X85n1594_022:0585a14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加意懇求。",
        "from": "X85n1594_022:0585a14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至期無驗。",
        "from": "X85n1594_022:0585a14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃展二七。",
        "from": "X85n1594_022:0585a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又無驗。",
        "from": "X85n1594_022:0585a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權曰。",
        "from": "X85n1594_022:0585a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣烹之。",
        "from": "X85n1594_022:0585a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會默念。",
        "from": "X85n1594_022:0585a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛名真慈。",
        "from": "X85n1594_022:0585a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不違我。",
        "from": "X85n1594_022:0585a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更請展期又七日。",
        "from": "X85n1594_022:0585a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五鼓矣。",
        "from": "X85n1594_022:0585a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞鏗然有聲。",
        "from": "X85n1594_022:0585a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起視瓶中。",
        "from": "X85n1594_022:0585a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五色錯發。",
        "from": "X85n1594_022:0585a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大呼曰。",
        "from": "X85n1594_022:0585a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果如吾願矣。",
        "from": "X85n1594_022:0585a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黎明進之。",
        "from": "X85n1594_022:0585a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權與公卿聚觀。",
        "from": "X85n1594_022:0585a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘆曰。",
        "from": "X85n1594_022:0585a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希世之瑞也。",
        "from": "X85n1594_022:0585a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會言。",
        "from": "X85n1594_022:0585a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利威神。",
        "from": "X85n1594_022:0585a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間無能壞者。",
        "from": "X85n1594_022:0585a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權使力士搥之砧碎。",
        "from": "X85n1594_022:0585a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而光明自若。",
        "from": "X85n1594_022:0585a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是建塔立寺。",
        "from": "X85n1594_022:0585a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名其里曰佛陀。",
        "from": "X85n1594_022:0585a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺曰建初。",
        "from": "X85n1594_022:0585a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江南塔寺。",
        "from": "X85n1594_022:0585a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自此而始。",
        "from": "X85n1594_022:0585a20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權問太傅闞澤曰。",
        "from": "X85n1594_022:0585a21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漢明何年。",
        "from": "X85n1594_022:0585a21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教入中國。",
        "from": "X85n1594_022:0585a21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣不及東方。",
        "from": "X85n1594_022:0585a21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澤曰。",
        "from": "X85n1594_022:0585a22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永平十一年。",
        "from": "X85n1594_022:0585a22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法初至。",
        "from": "X85n1594_022:0585a22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計今赤烏四年。",
        "from": "X85n1594_022:0585a22_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一百七十餘年矣。",
        "from": "X85n1594_022:0585a23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永平十四年。",
        "from": "X85n1594_022:0585a23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五嶽道士褚善信等。",
        "from": "X85n1594_022:0585a23_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與西僧觕法。",
        "from": "X85n1594_022:0585a24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善信負妄慚死。",
        "from": "X85n1594_022:0585a24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡中國人。",
        "from": "X85n1594_022:0585a24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "例不許出家。",
        "from": "X85n1594_022:0585a24_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無人流布。",
        "from": "X85n1594_022:0585b01_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加之亂離歲深。",
        "from": "X85n1594_022:0585b01_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方至本國。",
        "from": "X85n1594_022:0585b01_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權曰。",
        "from": "X85n1594_022:0585b01_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔子制述典訓。",
        "from": "X85n1594_022:0585b01_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教化來葉。",
        "from": "X85n1594_022:0585b02_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老莊修身自玩。",
        "from": "X85n1594_022:0585b02_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放浪山林。",
        "from": "X85n1594_022:0585b02_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸心澹泊。",
        "from": "X85n1594_022:0585b02_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何事佛為。",
        "from": "X85n1594_022:0585b03_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澤曰。",
        "from": "X85n1594_022:0585b03_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔老二教。",
        "from": "X85n1594_022:0585b03_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法天制用。",
        "from": "X85n1594_022:0585b03_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢違天。",
        "from": "X85n1594_022:0585b03_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教諸天奉行。",
        "from": "X85n1594_022:0585b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢違佛。",
