[
    {
        "source_sentence": "佛說無畏陀羅尼經",
        "from": "T21n1388_001:0906c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1388_001:0906c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1388_001:0906c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告諸苾芻。",
        "from": "T21n1388_001:0906c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽我今宣說無畏陀羅尼。",
        "from": "T21n1388_001:0906c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼能與眾生息除諸難。",
        "from": "T21n1388_001:0906c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻若人得聞及受持者。",
        "from": "T21n1388_001:0906c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所獲功德無量無邊。",
        "from": "T21n1388_001:0906c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1388_001:0906c10_5",
        "context_with_next_sentence": true
    },
