        "from": "T21n1388_001:0906c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告諸苾芻言。",
        "from": "T21n1388_001:0907a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T21n1388_001:0907a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼發志誠心。",
        "from": "T21n1388_001:0907a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭信供養讀誦受持。",
        "from": "T21n1388_001:0907a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自手書若使人書。",
        "from": "T21n1388_001:0907a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及為他說廣宣流布。",
        "from": "T21n1388_001:0907a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人不為王難水火難。",
        "from": "T21n1388_001:0907a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀兵難冤賊難之所傷害。",
        "from": "T21n1388_001:0907a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復不為夜叉難禁縛難。",
        "from": "T21n1388_001:0907a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雷雹難閃電難。",
        "from": "T21n1388_001:0907a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海漂沒難蟒蛇毒螫難。",
        "from": "T21n1388_001:0907a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子狂象難猛虎惡獸難飢饉疾疫難。",
        "from": "T21n1388_001:0907a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸難皆不為害乃至怖畏悉皆解脫。",
        "from": "T21n1388_001:0907a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸苾芻眾聞佛所說。",
        "from": "T21n1388_001:0907a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜信受作禮而退。",
        "from": "T21n1388_001:0907a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說無畏陀羅尼經",
        "from": "T21n1388_001:0907a27_0",
        "context_with_next_sentence": false
    }
]