[
    {
        "source_sentence": "禮法華經儀式",
        "from": "T46n1944_001:0956c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方法界常住三寶(拜起胡跪燒香運想已合掌唱云)願此香華雲。",
        "from": "T46n1944_001:0956c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿十方界。",
        "from": "T46n1944_001:0956c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養一切佛。",
        "from": "T46n1944_001:0956c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法蓮華經。",
        "from": "T46n1944_001:0956c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩聲聞眾。",
        "from": "T46n1944_001:0956c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受用作佛事(一拜起立歎云)。",
        "from": "T46n1944_001:0956c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　稽首十方佛　　圓滿最上乘",
        "from": "T46n1944_001:0956c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　本迹開二門　　法喻談真祕",
        "from": "T46n1944_001:0956c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　普使諸權小　　悉證佛菩提",
        "from": "T46n1944_001:0956c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我今誓歸依　　願超生死海",
        "from": "T46n1944_001:0957a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(讚歎已。",
        "from": "T46n1944_001:0957a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意述誠。",
        "from": "T46n1944_001:0957a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖曰禮經。",
        "from": "T46n1944_001:0957a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須禮佛菩薩。",
        "from": "T46n1944_001:0957a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使三寶義足)。",
        "from": "T46n1944_001:0957a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮本師釋迦牟尼佛。",
        "from": "T46n1944_001:0957a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮過去多寶佛。",
        "from": "T46n1944_001:0957a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方分身釋迦牟尼佛。",
        "from": "T46n1944_001:0957a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮盡法華經中。",
        "from": "T46n1944_001:0957a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及十方三世一切諸佛。",
        "from": "T46n1944_001:0957a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮妙法蓮華經。",
        "from": "T46n1944_001:0957a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙字法寶(下去每字準此一唱一拜)。",
        "from": "T46n1944_001:0957a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮盡法華經中。",
        "from": "T46n1944_001:0957a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及十方三世一切菩薩聲聞緣覺得道賢聖僧。",
        "from": "T46n1944_001:0957a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮普賢菩薩摩訶薩(拜已胡跪運想準常儀)。",
        "from": "T46n1944_001:0957a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心懺悔。",
        "from": "T46n1944_001:0957a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我(某甲)與一切眾生從無始來。",
        "from": "T46n1944_001:0957a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷失真心流轉生死。",
        "from": "T46n1944_001:0957a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根罪障無量無邊。",
        "from": "T46n1944_001:0957a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓妙佛乘無以開解。",
        "from": "T46n1944_001:0957a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所願不得現前我今禮敬妙法華經。",
        "from": "T46n1944_001:0957a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此善根發露黑惡。",
        "from": "T46n1944_001:0957a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過現未來三業所造。",
        "from": "T46n1944_001:0957a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊重罪皆得消滅。",
        "from": "T46n1944_001:0957a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心清淨惑障蠲除。",
        "from": "T46n1944_001:0957a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智莊嚴淨因增長。",
        "from": "T46n1944_001:0957a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他行願速得圓成。",
        "from": "T46n1944_001:0957a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸如來常在說法。",
        "from": "T46n1944_001:0957a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有功德起隨喜心。",
        "from": "T46n1944_001:0957a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回向菩提證常樂果。",
        "from": "T46n1944_001:0957a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之日正念現前。",
        "from": "T46n1944_001:0957a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面奉彌陀及諸聖眾。",
        "from": "T46n1944_001:0957a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一剎那頃生蓮華中。",
        "from": "T46n1944_001:0957a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普願眾生俱成佛道(懺悔發願已。",
        "from": "T46n1944_001:0957a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命禮三寶)。",
        "from": "T46n1944_001:0957a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無佛　南無法　南無僧　南無釋迦牟尼佛　南無妙法蓮華經　南無文殊師利菩薩　南無普賢菩薩(旋竟三歸依如常)禮法華經儀式",
        "from": "T46n1944_001:0957a22_0",
        "context_with_next_sentence": false
    }
]