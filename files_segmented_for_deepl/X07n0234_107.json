[
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百七(入第七十卷經)清凉山沙門　澄觀　述晉水沙門　(淨源)　錄疏注經△第四普救眾生妙德夜神。",
        "from": "X07n0234_107:0906c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄燄慧地。",
        "from": "X07n0234_107:0906c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文但有五。",
        "from": "X07n0234_107:0906c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二三合故。",
        "from": "X07n0234_107:0906c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初依教趣求二。",
        "from": "X07n0234_107:0906c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初修入前法。",
        "from": "X07n0234_107:0906c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子(至)心無暫捨諸根不散。",
        "from": "X07n0234_107:0906c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二趣求後友。",
        "from": "X07n0234_107:0906c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心願得見善知識(至)普救眾生妙德夜神所。",
        "from": "X07n0234_107:0906c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二聞見法界。",
        "from": "X07n0234_107:0906c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即合二三。",
        "from": "X07n0234_107:0906c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂約善財。",
        "from": "X07n0234_107:0906c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則是見敬。",
        "from": "X07n0234_107:0906c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約夜神所現。",
        "from": "X07n0234_107:0906c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是解脫業用。",
        "from": "X07n0234_107:0906c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便為默授法界。",
        "from": "X07n0234_107:0906c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約二文開辨。",
        "from": "X07n0234_107:0906c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則先明見敬諮問。",
        "from": "X07n0234_107:0906c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後答因緣。",
        "from": "X07n0234_107:0906c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方為正授法界。",
        "from": "X07n0234_107:0906c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今依合科。",
        "from": "X07n0234_107:0906c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總分為四。",
        "from": "X07n0234_107:0906c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初現光加持。",
        "from": "X07n0234_107:0906c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼夜神為善財童子(至)入善財頂充滿其身。",
        "from": "X07n0234_107:0906c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏眾生解脫。",
        "from": "X07n0234_107:0906c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即光所依。",
        "from": "X07n0234_107:0906c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是己法門。",
        "from": "X07n0234_107:0906c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名體可知。",
        "from": "X07n0234_107:0906c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二蒙光獲益。",
        "from": "X07n0234_107:0906c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂得三昧見大用故。",
        "from": "X07n0234_107:0906c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_107:0906c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初得定。",
        "from": "X07n0234_107:0906c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財爾時即得究竟清淨輪三昧。",
        "from": "X07n0234_107:0907a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂三業六根。",
        "from": "X07n0234_107:0907a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉離障。",
        "from": "X07n0234_107:0907a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云究竟清淨。",
        "from": "X07n0234_107:0907a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨智圓滿。",
        "from": "X07n0234_107:0907a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧障為輪。",
        "from": "X07n0234_107:0907a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故所見無礙。",
        "from": "X07n0234_107:0907a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二明見大用二。",
        "from": "X07n0234_107:0907a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初見用所依處。",
        "from": "X07n0234_107:0907a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此三昧已悉見二神(至)如是一切所有微塵。",
        "from": "X07n0234_107:0907a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二明所見事三。",
        "from": "X07n0234_107:0907a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初所化處二。",
        "from": "X07n0234_107:0907a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總明處類。",
        "from": "X07n0234_107:0907a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一塵中各見佛剎(至)各各差別靡不悉見。",
        "from": "X07n0234_107:0907a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別明塵中之剎。",
        "from": "X07n0234_107:0907a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又見一切世界差別(至)或有世界清淨。",
        "from": "X07n0234_107:0907a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上之二句。",
        "from": "X07n0234_107:0907a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是總明。",
        "from": "X07n0234_107:0907a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有世界趣雜穢或有世界趣清淨。",
        "from": "X07n0234_107:0907a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉變向染淨故。",
        "from": "X07n0234_107:0907a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有世界雜穢清淨。",
        "from": "X07n0234_107:0907a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染多。",
        "from": "X07n0234_107:0907a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有世界清淨雜穢。",
        "from": "X07n0234_107:0907a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反上。",
        "from": "X07n0234_107:0907a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有世界一向清淨。",
        "from": "X07n0234_107:0907a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對上二義故。",
        "from": "X07n0234_107:0907a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有世界其形平正或有覆住或有側住。",
        "from": "X07n0234_107:0907a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二能化益二。",
        "from": "X07n0234_107:0907a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總明。",
        "from": "X07n0234_107:0907a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等一切世界(至)普現其前隨宜化度。",
        "from": "X07n0234_107:0907a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別顯二。",
        "from": "X07n0234_107:0907a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初化五道。",
        "from": "X07n0234_107:0907a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令地獄眾生免諸苦毒(至)如是等怖悉令捨離。",
        "from": "X07n0234_107:0907a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二化九類。",
        "from": "X07n0234_107:0907a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又見一切眾生卵生胎生(至)普現其前常勤救護。",
        "from": "X07n0234_107:0907b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三明化意。",
        "from": "X07n0234_107:0907b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成就菩薩大願力故(至)令得一切智清淨光明故。",
        "from": "X07n0234_107:0907b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成諸法。",
        "from": "X07n0234_107:0907b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通能所化。",
        "from": "X07n0234_107:0907b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三三業敬讚三。",
        "from": "X07n0234_107:0907b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初身心敬重。",
        "from": "X07n0234_107:0907b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子見此夜神(至)頭面作體一心瞻仰。",
        "from": "X07n0234_107:0907b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二顯友自在。",
        "from": "X07n0234_107:0907b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼夜神即捨菩薩(至)而不捨其自在神力。",
        "from": "X07n0234_107:0907b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三口以偈讚。",
        "from": "X07n0234_107:0907b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十偈半。",
        "from": "X07n0234_107:0907b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分二。",
        "from": "X07n0234_107:0907b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初偈總。",
        "from": "X07n0234_107:0907b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子恭敬合掌却住一面以偈讚曰。",
        "from": "X07n0234_107:0907b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我善財得見如是大神力其心生歡喜說偈而讚歎。",
        "from": "X07n0234_107:0907b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二餘偈別二。",
        "from": "X07n0234_107:0907b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初有九偈半。",
        "from": "X07n0234_107:0907b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光用無涯。",
        "from": "X07n0234_107:0907b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見尊妙身眾相以莊嚴(至)王等一切怖。",
        "from": "X07n0234_107:0907b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二述前蒙光獲益三。",
        "from": "X07n0234_107:0907b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初推功歸本。",
        "from": "X07n0234_107:0907b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我承喜目教今得詣尊所。",
        "from": "X07n0234_107:0907b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有二偈半。",
        "from": "X07n0234_107:0907b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明述得三昧。",
        "from": "X07n0234_107:0907b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見尊眉間相放大清淨光(至)普見十方佛。",
        "from": "X07n0234_107:0907b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有七偈。",
        "from": "X07n0234_107:0907b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明述見大用。",
        "from": "X07n0234_107:0907b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於所經處悉見諸微塵(至)普皆往供養。",
        "from": "X07n0234_107:0907b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四問答因緣二。",
        "from": "X07n0234_107:0907b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初問有三。",
        "from": "X07n0234_107:0907b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子說此頌已(至)甚深希有其名何等。",
        "from": "X07n0234_107:0907b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一問名。",
        "from": "X07n0234_107:0907b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前來標名。",
        "from": "X07n0234_107:0907b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集經者言。",
        "from": "X07n0234_107:0907b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故此方問。",
        "from": "X07n0234_107:0907b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此解脫其已久如。",
        "from": "X07n0234_107:0907b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二問得法久近。",
        "from": "X07n0234_107:0907b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯久修德遠故。",
        "from": "X07n0234_107:0907b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修何等行而得清淨。",
        "from": "X07n0234_107:0907c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三問修因淨治。",
        "from": "X07n0234_107:0907c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救入路故。",
        "from": "X07n0234_107:0907c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二答文二。",
        "from": "X07n0234_107:0907c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初歎深難說。",
        "from": "X07n0234_107:0907c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜神言善男子是處難知(至)一切二乘所不能□。",
        "from": "X07n0234_107:0907c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先標。",
        "from": "X07n0234_107:0907c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次徵。",
        "from": "X07n0234_107:0907c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "X07n0234_107:0907c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後釋。",
        "from": "X07n0234_107:0907c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是住普賢菩薩行者(至)三世方便海者境界故。",
        "from": "X07n0234_107:0907c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深相云何。",
        "from": "X07n0234_107:0907c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約得時。",
        "from": "X07n0234_107:0907c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時久遠故。",
        "from": "X07n0234_107:0907c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非久近故。",
        "from": "X07n0234_107:0907c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約修因。",
        "from": "X07n0234_107:0907c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因行廣故。",
        "from": "X07n0234_107:0907c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若通上二。",
        "from": "X07n0234_107:0907c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契理甚深故。",
        "from": "X07n0234_107:0907c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約名說。",
        "from": "X07n0234_107:0907c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名如體用故。",
        "from": "X07n0234_107:0907c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名者實賓。",
        "from": "X07n0234_107:0907c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難窮實故。",
        "from": "X07n0234_107:0907c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二承力為說二。",
        "from": "X07n0234_107:0907c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先長行二。",
        "from": "X07n0234_107:0907c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標許。",
        "from": "X07n0234_107:0907c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我承佛力今為汝說。",
        "from": "X07n0234_107:0907c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正說二。",
        "from": "X07n0234_107:0907c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初通答三問三。",
        "from": "X07n0234_107:0907c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初答得法久近十。",
        "from": "X07n0234_107:0907c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總舉劫剎佛興。",
        "from": "X07n0234_107:0907c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子乃往古世(至)微塵數如來於中出現。",
        "from": "X07n0234_107:0907c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已略詶其久近。",
        "from": "X07n0234_107:0907c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二通顯剎相。",
        "from": "X07n0234_107:0907c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其佛世界以一切香王(至)諸大菩薩之所止住。",
        "from": "X07n0234_107:0907c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三別顯生處。",
        "from": "X07n0234_107:0907c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此界東際輪圍山側(至)其中眾生具行十善。",
        "from": "X07n0234_107:0907c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四明本生父母。",
        "from": "X07n0234_107:0907c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有轉輪王於中出現(至)常放光明照千由旬。",
        "from": "X07n0234_107:0907c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五明本生身。",
        "from": "X07n0234_107:0907c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有一女名普智燄(至)眾生見者情無厭足。",
        "from": "X07n0234_107:0907c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六眾生起惡。",
        "from": "X07n0234_107:0908a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為佛現因。",
        "from": "X07n0234_107:0908a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時眾生壽命無量(至)一切樂事悉皆損減。",
        "from": "X07n0234_107:0908a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七佛興益物三。",
        "from": "X07n0234_107:0908a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明得道之場。",
        "from": "X07n0234_107:0908a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼城北有菩提樹(至)一切如來莊嚴境界雲。",
        "from": "X07n0234_107:0908a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二總顯佛數。",
        "from": "X07n0234_107:0908a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌山微塵數佛於中出現。",
        "from": "X07n0234_107:0908a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三別明初佛。",
        "from": "X07n0234_107:0908a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文七。",
        "from": "X07n0234_107:0908a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總明成道。",
        "from": "X07n0234_107:0908a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其第一佛名普智寶燄(至)演說正法成熟眾生。",
        "from": "X07n0234_107:0908a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二成道前相。",
        "from": "X07n0234_107:0908a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其彼如來未成佛時(至)知七日後佛當出現。",
        "from": "X07n0234_107:0908a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂放光調機。",
        "from": "X07n0234_107:0908a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十一重。",
        "from": "X07n0234_107:0908a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一重中。",
        "from": "X07n0234_107:0908a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有光名。",
        "from": "X07n0234_107:0908a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業用成益。",
        "from": "X07n0234_107:0908a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以益對名。",
        "from": "X07n0234_107:0908a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以思準。",
        "from": "X07n0234_107:0908a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約表法。",
        "from": "X07n0234_107:0908a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則前十為次第十度光。",
        "from": "X07n0234_107:0908a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後一為圓融十度光。",
        "from": "X07n0234_107:0908a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此照心。",
        "from": "X07n0234_107:0908a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則自智出現。",
        "from": "X07n0234_107:0908a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三動剎集眾。",
        "from": "X07n0234_107:0908a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿七日已一切世界(至)應見佛者咸詣道場。",
        "from": "X07n0234_107:0908a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四現相顯德。",
        "from": "X07n0234_107:0908a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼世界中一切輪圍(至)出現世間不思議相。",
        "from": "X07n0234_107:0908a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五明成道依正。",
        "from": "X07n0234_107:0908a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子此普照三世(至)皆有菩薩結加趺坐。",
        "from": "X07n0234_107:0908a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六始成正覺。",
        "from": "X07n0234_107:0908a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子彼普智寶燄(至)成阿耨多羅三藐三菩提。",
        "from": "X07n0234_107:0908a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一成一切成故。",
        "from": "X07n0234_107:0908a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七轉正法輪三。",
        "from": "X07n0234_107:0908a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總標轉法。",
        "from": "X07n0234_107:0908a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨眾生心悉現其前為轉法輪。",
        "from": "X07n0234_107:0908a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二顯其成益。",
        "from": "X07n0234_107:0908a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一一世界令無量眾生(至)無量眾生得生天中。",
        "from": "X07n0234_107:0908b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先益凡夫。",
        "from": "X07n0234_107:0908b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次益二乘。",
        "from": "X07n0234_107:0908b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無眾生住於聲聞辟支佛地。",
        "from": "X07n0234_107:0908b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後益菩薩。",
        "from": "X07n0234_107:0908b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無量眾法成就出離(至)清淨境界菩提之行。",
        "from": "X07n0234_107:0908b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上成行。",
        "from": "X07n0234_107:0908b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下成位。",
        "from": "X07n0234_107:0908b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無量眾生發菩提心。",
        "from": "X07n0234_107:0908b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住位。",
        "from": "X07n0234_107:0908b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無量眾生住菩薩。",
        "from": "X07n0234_107:0908b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行位。",
        "from": "X07n0234_107:0908b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無量眾生安住清淨波羅蜜道。",
        "from": "X07n0234_107:0908b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向位。",
        "from": "X07n0234_107:0908b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大願海。",
        "from": "X07n0234_107:0908b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治前度故。",
        "from": "X07n0234_107:0908b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無量眾生住菩薩初地(至)安住普賢清淨行願。",
        "from": "X07n0234_107:0908b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後二句是等覺位。",
        "from": "X07n0234_107:0908b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結無間斷。",
        "from": "X07n0234_107:0908b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子彼普智寶燄(至)念念調伏無量眾生。",
        "from": "X07n0234_107:0908b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八明善友引導六。",
        "from": "X07n0234_107:0908b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初知機起惡。",
        "from": "X07n0234_107:0908b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時普賢菩薩知寶華燈王(至)而生憍慢陵蔑他人。",
        "from": "X07n0234_107:0908b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二現身超勝。",
        "from": "X07n0234_107:0908b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化現妙身端正殊特(至)亦如聚墨對閻浮金。",
        "from": "X07n0234_107:0908b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三物機驚怪。",
        "from": "X07n0234_107:0908b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸眾生或作是言(至)種種思惟無能解了。",
        "from": "X07n0234_107:0908b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四告語佛興。",
        "from": "X07n0234_107:0908b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時普賢菩薩在彼輪王(至)法雲音幢菩提樹下。",
        "from": "X07n0234_107:0908b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五女發大心。",
        "from": "X07n0234_107:0908b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時聖王女蓮華妙眼(至)常得不離此善知識。",
        "from": "X07n0234_107:0908c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是入法因。",
        "from": "X07n0234_107:0908c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六父王詣佛四。",
        "from": "X07n0234_107:0908c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初身處虗空。",
        "from": "X07n0234_107:0908c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子時轉輪王(至)欲令眾生俱往見佛。",
        "from": "X07n0234_107:0908c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二以偈讚引。",
        "from": "X07n0234_107:0908c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十偈分三。",
        "from": "X07n0234_107:0908c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總勸。",
        "from": "X07n0234_107:0908c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偈讚曰如來出世間普救諸眾生(至)往詣導師所。",
        "from": "X07n0234_107:0908c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二釋勸。",
        "from": "X07n0234_107:0908c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無數劫乃有佛興世(至)一切無空過。",
        "from": "X07n0234_107:0908c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結勸。",
        "from": "X07n0234_107:0908c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當共汝等往觀調御尊(至)恭敬而供養。",
        "from": "X07n0234_107:0908c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝故應往。",
        "from": "X07n0234_107:0908c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三廣興雲供。",
        "from": "X07n0234_107:0908c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時轉輪聖王說偈讚佛(至)於虗空中周徧嚴飾。",
        "from": "X07n0234_107:0908c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四至彼修敬。",
        "from": "X07n0234_107:0908c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到已頂禮普智寶燄(至)普照十方寶蓮華座。",
        "from": "X07n0234_107:0908c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△九德女修因三。",
        "from": "X07n0234_107:0908c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初嚴具奉佛。",
        "from": "X07n0234_107:0908c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時轉輪王女普智燄(至)諸莊嚴具持以散佛。",
        "from": "X07n0234_107:0908c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表修萬行。",
        "from": "X07n0234_107:0908c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛果故。",
        "from": "X07n0234_107:0908c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二見佛現變。",
        "from": "X07n0234_107:0908c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時莊嚴具於虗空中(至)種種如來契經雲。",
        "from": "X07n0234_107:0908c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表因小果大故。",
        "from": "X07n0234_107:0908c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三覩變獲益。",
        "from": "X07n0234_107:0908c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既見是已其心清淨生大歡喜。",
        "from": "X07n0234_107:0908c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△十聞經得益三。",
        "from": "X07n0234_107:0908c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初佛為說經。",
        "from": "X07n0234_107:0908c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普智寶燄妙德幢王(至)微塵數修多羅而為眷屬。",
        "from": "X07n0234_107:0908c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從總相為名。",
        "from": "X07n0234_107:0908c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正明聞益三。",
        "from": "X07n0234_107:0908c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初得三昧益。",
        "from": "X07n0234_107:0908c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼女人聞此經已(至)彼三昧心亦復如是。",
        "from": "X07n0234_107:0908c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上總。",
        "from": "X07n0234_107:0908c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下別。",
        "from": "X07n0234_107:0908c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂現見一切佛三昧(至)普詣一切清淨佛剎三昧。",
        "from": "X07n0234_107:0909a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二得大心益。",
        "from": "X07n0234_107:0909a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得如是等十千三昧(至)徧緣一切方海心。",
        "from": "X07n0234_107:0909a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即悲智等心。",
        "from": "X07n0234_107:0909a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三成大願益。",
        "from": "X07n0234_107:0909a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心思惟普賢大願(至)成就普賢所有大願。",
        "from": "X07n0234_107:0909a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上之三益。",
        "from": "X07n0234_107:0909a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即調伏眾生。",
        "from": "X07n0234_107:0909a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫三事。",
        "from": "X07n0234_107:0909a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆調伏之法故。",
        "from": "X07n0234_107:0909a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三顯發昔因。",
        "from": "X07n0234_107:0909a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼如來復為其女(至)一心趣向一切智位。",
        "from": "X07n0234_107:0909a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二明發心之始。",
        "from": "X07n0234_107:0909a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義男子復於此前。",
        "from": "X07n0234_107:0909a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得法劫之前也。",
        "from": "X07n0234_107:0909a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯前得法。",
        "from": "X07n0234_107:0909a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非無因也。",
        "from": "X07n0234_107:0909a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過十大劫有世界(至)成熟於我令生歡喜。",
        "from": "X07n0234_107:0909a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結會古今三。",
        "from": "X07n0234_107:0909a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初結會得法時身。",
        "from": "X07n0234_107:0909a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子於意云何(至)時妙德眼童女者即我身是。",
        "from": "X07n0234_107:0909a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二結發心之始。",
        "from": "X07n0234_107:0909a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於彼時身為童女至我於彼時初始發心。",
        "from": "X07n0234_107:0909a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三正結得法。",
        "from": "X07n0234_107:0909a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復引導令我得見(至)聽聞說法依教修行。",
        "from": "X07n0234_107:0909a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方詶其名。",
        "from": "X07n0234_107:0909a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前三益。",
        "from": "X07n0234_107:0909a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別答修行淨治。",
        "from": "X07n0234_107:0909a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前有聞法修行。",
        "from": "X07n0234_107:0909a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是得法之前。",
        "from": "X07n0234_107:0909a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是得法之後。",
        "from": "X07n0234_107:0909a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中二。",
        "from": "X07n0234_107:0909a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初別舉大光劫三。",
        "from": "X07n0234_107:0909a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總明。",
        "from": "X07n0234_107:0909a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子過彼毗盧遮那(至)我皆承事恭敬供養。",
        "from": "X07n0234_107:0909a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別顯。",
        "from": "X07n0234_107:0909a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其最初佛名大悲幢(至)我皆聽聞受持不忘。",
        "from": "X07n0234_107:0909a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中經名。",
        "from": "X07n0234_107:0909b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說者當演。",
        "from": "X07n0234_107:0909b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三顯其最後。",
        "from": "X07n0234_107:0909b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如是次第(至)名法界方便不退藏。",
        "from": "X07n0234_107:0909b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二總顯諸劫三。",
        "from": "X07n0234_107:0909b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總標。",
        "from": "X07n0234_107:0909b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子此世界中(至)我皆承事恭敬供養。",
        "from": "X07n0234_107:0909b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二得法修行。",
        "from": "X07n0234_107:0909b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來所說正法(至)入一切普賢行。",
        "from": "X07n0234_107:0909b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三見佛成行。",
        "from": "X07n0234_107:0909b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我依一切智光明故(至)以得一切智光明故。",
        "from": "X07n0234_107:0909b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二偈頌三。",
        "from": "X07n0234_107:0909b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初舉法誡聽。",
        "from": "X07n0234_107:0909b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時普救眾生夜神(至)為善財童子而說頌曰。",
        "from": "X07n0234_107:0909b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財聽我說甚深難見法(至)汝今應諦聽。",
        "from": "X07n0234_107:0909b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即頌前標許。",
        "from": "X07n0234_107:0909b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二頌前正說。",
        "from": "X07n0234_107:0909b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通頌得法久近及修行清淨二。",
        "from": "X07n0234_107:0909b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初頌最初一劫。",
        "from": "X07n0234_107:0909b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念過去世過剎微塵劫(至)第十賢德佛。",
        "from": "X07n0234_107:0909b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上之三十六偈。",
        "from": "X07n0234_107:0909b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣前長行。",
        "from": "X07n0234_107:0909b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一百一十佛。",
        "from": "X07n0234_107:0909b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表十地等覺。",
        "from": "X07n0234_107:0909b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各以初佛為主。",
        "from": "X07n0234_107:0909b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘九為伴。",
        "from": "X07n0234_107:0909b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二頌前總顯諸劫。",
        "from": "X07n0234_107:0909b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌塵數劫此中所有佛(至)入此解脫門。",
        "from": "X07n0234_107:0909b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦表智滿行圓。",
        "from": "X07n0234_107:0909b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非佛故。",
        "from": "X07n0234_107:0909b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有一偈。",
        "from": "X07n0234_107:0909b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉因勸修。",
        "from": "X07n0234_107:0909b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於無量劫修行得此道汝若能修行不久亦當得。",
        "from": "X07n0234_107:0909b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三謙己推勝。",
        "from": "X07n0234_107:0909b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我唯知此(至)能知能說彼功德行。",
        "from": "X07n0234_107:0909b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四指示後友。",
        "from": "X07n0234_107:0909b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子去此不遠。",
        "from": "X07n0234_107:0909b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以證同。",
        "from": "X07n0234_107:0909c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又禪依進發。",
        "from": "X07n0234_107:0909c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云不遠。",
        "from": "X07n0234_107:0909c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主夜神名寂靜音海。",
        "from": "X07n0234_107:0909c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪故寂靜。",
        "from": "X07n0234_107:0909c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入俗演法。",
        "from": "X07n0234_107:0909c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化物深廣。",
        "from": "X07n0234_107:0909c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云音海。",
        "from": "X07n0234_107:0909c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此神即普救之母。",
        "from": "X07n0234_107:0909c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表真精進。",
        "from": "X07n0234_107:0909c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却從定生。",
        "from": "X07n0234_107:0909c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起心動念。",
        "from": "X07n0234_107:0909c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是妄非進故。",
        "from": "X07n0234_107:0909c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐摩尼光幢莊嚴蓮華座(至)學菩薩行修菩薩道。",
        "from": "X07n0234_107:0909c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五戀德禮辭。",
        "from": "X07n0234_107:0909c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子頂禮其足(至)殷勤瞻仰辭退而去。",
        "from": "X07n0234_107:0909c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百七",
        "from": "X07n0234_107:0909c10_0",
        "context_with_next_sentence": false
    }
]