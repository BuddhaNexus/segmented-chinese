[
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百九(入第七十一經下半)清涼山沙門　澄觀　述晉水沙門　(淨源)　錄疏注經△三辨法根深二。",
        "from": "X07n0234_109:0913a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初問。",
        "from": "X07n0234_109:0913a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子白夜神言(至)聖者證得其已久如。",
        "from": "X07n0234_109:0913a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二答二。",
        "from": "X07n0234_109:0913a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先辨初劫修行二。",
        "from": "X07n0234_109:0913a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總舉剎劫。",
        "from": "X07n0234_109:0913a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜神言善男子乃往古世(至)不可說不可說城。",
        "from": "X07n0234_109:0913a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言世界轉者。",
        "from": "X07n0234_109:0913a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂世界為塵。",
        "from": "X07n0234_109:0913a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一塵一剎。",
        "from": "X07n0234_109:0913a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復末為塵故。",
        "from": "X07n0234_109:0913a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶無量無量。",
        "from": "X07n0234_109:0913a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一無量轉等。",
        "from": "X07n0234_109:0913a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若取迴轉形世界塵者。",
        "from": "X07n0234_109:0913a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以偏取此形。",
        "from": "X07n0234_109:0913a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別彰遇佛四。",
        "from": "X07n0234_109:0913a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總舉佛數興處。",
        "from": "X07n0234_109:0913a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子彼世界中(至)微塵數如來於中出現。",
        "from": "X07n0234_109:0913b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別於初佛得法六。",
        "from": "X07n0234_109:0913b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標佛現。",
        "from": "X07n0234_109:0913b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其最初佛名法海雷音光明王。",
        "from": "X07n0234_109:0913b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二父王出家。",
        "from": "X07n0234_109:0913b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼佛出時有轉輪王(至)其王出家護持正法。",
        "from": "X07n0234_109:0913b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三惡世過興。",
        "from": "X07n0234_109:0913b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法欲滅時有千部異眾(至)及以一切世間之論。",
        "from": "X07n0234_109:0913b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四滅過弘闡。",
        "from": "X07n0234_109:0913b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王比丘而語之言(至)六萬五千歲中而得興盛。",
        "from": "X07n0234_109:0913b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五王女見聞發心得法。",
        "from": "X07n0234_109:0913b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有比丘尼名法輪化光。",
        "from": "X07n0234_109:0913b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法輪化光者。",
        "from": "X07n0234_109:0913b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿般若。",
        "from": "X07n0234_109:0913b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照一切法。",
        "from": "X07n0234_109:0913b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無而有故。",
        "from": "X07n0234_109:0913b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是此王女百千比丘尼(至)光明王如來一切神力。",
        "from": "X07n0234_109:0913b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即正答得法久近也。",
        "from": "X07n0234_109:0913b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六結會古今。",
        "from": "X07n0234_109:0913b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子於汝意云何(至)一切法門海般若波羅蜜。",
        "from": "X07n0234_109:0913b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼顯成益。",
        "from": "X07n0234_109:0913b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三略舉次前百佛。",
        "from": "X07n0234_109:0913b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次有佛興名離垢法光明(至)名普智光明燈。",
        "from": "X07n0234_109:0913b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四結略顯廣。",
        "from": "X07n0234_109:0913b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如是等須彌山(至)教化成熟無量眾生。",
        "from": "X07n0234_109:0913b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二類顯多劫成益。",
        "from": "X07n0234_109:0913b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是已來於佛剎微塵數劫(至)住一切智無上法城。",
        "from": "X07n0234_109:0913b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四謙己推勝二。",
        "from": "X07n0234_109:0913b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初謙己知一。",
        "from": "X07n0234_109:0913b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我唯知此(至)常真實語恒清淨語。",
        "from": "X07n0234_109:0913b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略顯四種業用。",
        "from": "X07n0234_109:0913c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約妙音釋。",
        "from": "X07n0234_109:0913c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不綺不離間。",
        "from": "X07n0234_109:0913c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不妄不惡口。",
        "from": "X07n0234_109:0913c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如次配之。",
        "from": "X07n0234_109:0913c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若約甚深釋者。",
        "from": "X07n0234_109:0913c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不與理合。",
        "from": "X07n0234_109:0913c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆名戲論。",
        "from": "X07n0234_109:0913c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理外發言。",
        "from": "X07n0234_109:0913c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是二語。",
        "from": "X07n0234_109:0913c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既與理乖。",
        "from": "X07n0234_109:0913c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則非真非淨。",
        "from": "X07n0234_109:0913c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反此可知。",
        "from": "X07n0234_109:0913c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二推勝知多。",
        "from": "X07n0234_109:0913c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如諸菩薩摩訶薩(至)能知能說彼功德行。",
        "from": "X07n0234_109:0913c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五指示後友三。",
        "from": "X07n0234_109:0913c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指後位。",
        "from": "X07n0234_109:0913c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子此佛會中有主夜神名開敷一切樹華。",
        "from": "X07n0234_109:0913c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約事在香樹閣內故。",
        "from": "X07n0234_109:0913c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約位七地。",
        "from": "X07n0234_109:0913c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是有功用行。",
        "from": "X07n0234_109:0913c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能開發無相住故。",
        "from": "X07n0234_109:0913c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝詣彼問菩薩云何(至)一切眾生住一切智。",
        "from": "X07n0234_109:0913c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二偈頌中。",
        "from": "X07n0234_109:0913c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌前法者。",
        "from": "X07n0234_109:0913c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨去殷勤。",
        "from": "X07n0234_109:0913c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑令修學故。",
        "from": "X07n0234_109:0913c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十一偈於中分二。",
        "from": "X07n0234_109:0913c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初頌前體用。",
        "from": "X07n0234_109:0913c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時守護一切城主夜神(至)為善財童子而說頌言。",
        "from": "X07n0234_109:0913c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩解脫深難見(至)開通三世解脫道。",
        "from": "X07n0234_109:0913c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二顯法根深二。",
        "from": "X07n0234_109:0913c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先頌初劫三。",
        "from": "X07n0234_109:0913c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初通頌初後。",
        "from": "X07n0234_109:0913c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過於剎轉微塵劫(至)我皆供養聽受法。",
        "from": "X07n0234_109:0913c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有四頌。",
        "from": "X07n0234_109:0913c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別頌於初佛得法。",
        "from": "X07n0234_109:0913c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見法海雷音佛(至)動地舒光悟含識。",
        "from": "X07n0234_109:0913c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△□□□□頌中間百佛及後結文。",
        "from": "X07n0234_109:0913c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見第二佛而親近(至)如是須彌塵數等。",
        "from": "X07n0234_109:0913c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二頌類顯。",
        "from": "X07n0234_109:0913c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸剎轉微塵劫(至)令此解脫得清淨。",
        "from": "X07n0234_109:0913c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三善財得益。",
        "from": "X07n0234_109:0913c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖通由前文。",
        "from": "X07n0234_109:0913c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦近由此。",
        "from": "X07n0234_109:0913c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有二。",
        "from": "X07n0234_109:0913c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初長行敘益。",
        "from": "X07n0234_109:0913c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子(至)獲菩薩大辨才心大歡喜。",
        "from": "X07n0234_109:0914a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二偈頌慶讚。",
        "from": "X07n0234_109:0914a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十偈分四。",
        "from": "X07n0234_109:0914a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初讚福智超絕。",
        "from": "X07n0234_109:0914a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察守護一亦見十夜神以偈讚曰。",
        "from": "X07n0234_109:0914a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已行廣大妙慧海(至)威德光明住此眾。",
        "from": "X07n0234_109:0914a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有四頌。",
        "from": "X07n0234_109:0914a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎悲智甚深。",
        "from": "X07n0234_109:0914a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達法性如虗空(至)說離世間眾怖行。",
        "from": "X07n0234_109:0914a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念攀緣一切境。",
        "from": "X07n0234_109:0914a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不礙分別事故。",
        "from": "X07n0234_109:0914a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心永斷諸分別。",
        "from": "X07n0234_109:0914a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常契理故。",
        "from": "X07n0234_109:0914a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又上句約觀。",
        "from": "X07n0234_109:0914a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下句約止。",
        "from": "X07n0234_109:0914a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即止觀雙運。",
        "from": "X07n0234_109:0914a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達無性。",
        "from": "X07n0234_109:0914a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成無分別。",
        "from": "X07n0234_109:0914a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而起大悲。",
        "from": "X07n0234_109:0914a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成上攀緣。",
        "from": "X07n0234_109:0914a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攀緣即分別耳。",
        "from": "X07n0234_109:0914a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不唯屬妄。",
        "from": "X07n0234_109:0914a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有四偈。",
        "from": "X07n0234_109:0914a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總顯德圓離障攝益。",
        "from": "X07n0234_109:0914a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已住如來諸願道(至)引導使入菩提路。",
        "from": "X07n0234_109:0914a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有一頌。",
        "from": "X07n0234_109:0914a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成行入位。",
        "from": "X07n0234_109:0914a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已生如來誓願家(至)隨眾生樂現眾色。",
        "from": "X07n0234_109:0914a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六戀德禮辭。",
        "from": "X07n0234_109:0914a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時善財童子說此頌已(至)殷勤瞻仰辭退而去。",
        "from": "X07n0234_109:0914a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已下入第七十二經。",
        "from": "X07n0234_109:0914a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△第七開敷一切樹華夜神。",
        "from": "X07n0234_109:0914a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄遠行地。",
        "from": "X07n0234_109:0914a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文六。",
        "from": "X07n0234_109:0914a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初依教趣求。",
        "from": "X07n0234_109:0914a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時善財童子(至)往詣開敷一切樹華夜神所。",
        "from": "X07n0234_109:0914a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二見敬諮問。",
        "from": "X07n0234_109:0914a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見其身在眾寶香樹(至)唯願垂慈為我宣說。",
        "from": "X07n0234_109:0914a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三授己法界四。",
        "from": "X07n0234_109:0914a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初顯法行二。",
        "from": "X07n0234_109:0914a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明安樂眾生行。",
        "from": "X07n0234_109:0914a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜神言善男子(至)達其處所宿夜安樂。",
        "from": "X07n0234_109:0914a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是法門所作業用。",
        "from": "X07n0234_109:0914b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對先問行。",
        "from": "X07n0234_109:0914b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故總示其行。",
        "from": "X07n0234_109:0914b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未舉法門之名。",
        "from": "X07n0234_109:0914b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二利益眾生行二。",
        "from": "X07n0234_109:0914b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總。",
        "from": "X07n0234_109:0914b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若有眾生(至)種種善根使其修習。",
        "from": "X07n0234_109:0914b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令物斷惡修善故。",
        "from": "X07n0234_109:0914b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別。",
        "from": "X07n0234_109:0914b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為慳悋者讚歎布施(至)令住菩薩智波羅蜜。",
        "from": "X07n0234_109:0914b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度以治蔽障。",
        "from": "X07n0234_109:0914b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二立法名字。",
        "from": "X07n0234_109:0914b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "X07n0234_109:0914b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我已成就菩薩出生廣大喜光明解脫門。",
        "from": "X07n0234_109:0914b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此有二意。",
        "from": "X07n0234_109:0914b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者望前稱己益物悲智之心。",
        "from": "X07n0234_109:0914b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故生大喜。",
        "from": "X07n0234_109:0914b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者望後照佛攝生大悲智。",
        "from": "X07n0234_109:0914b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故生大喜。",
        "from": "X07n0234_109:0914b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三明業用二。",
        "from": "X07n0234_109:0914b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初問。",
        "from": "X07n0234_109:0914b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財言大聖此解脫門境界云何。",
        "from": "X07n0234_109:0914b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是業用分齊。",
        "from": "X07n0234_109:0914b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云境界。",
        "from": "X07n0234_109:0914b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二答三。",
        "from": "X07n0234_109:0914b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總標。",
        "from": "X07n0234_109:0914b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜神言善男子入此解脫(至)普攝眾生巧方便智。",
        "from": "X07n0234_109:0914b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂知佛攝生之智為業用分齊。",
        "from": "X07n0234_109:0914b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二略顯普攝之相。",
        "from": "X07n0234_109:0914b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何普攝善男子(至)□淨業力之所攝故。",
        "from": "X07n0234_109:0914b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂一切物樂皆由佛得。",
        "from": "X07n0234_109:0914b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知佛攝。",
        "from": "X07n0234_109:0914b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三廣顯巧方便智二。",
        "from": "X07n0234_109:0914b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初徵。",
        "from": "X07n0234_109:0914b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何知然。",
        "from": "X07n0234_109:0914b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二釋。",
        "from": "X07n0234_109:0914b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋意云。",
        "from": "X07n0234_109:0914b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見如來從因至果。",
        "from": "X07n0234_109:0914b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲巧攝。",
        "from": "X07n0234_109:0914b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知樂由佛生。",
        "from": "X07n0234_109:0914b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中二。",
        "from": "X07n0234_109:0914b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總明。",
        "from": "X07n0234_109:0914b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我入此出生(至)菩薩行海悉皆明見。",
        "from": "X07n0234_109:0914b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別顯分二。",
        "from": "X07n0234_109:0914b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發善巧普攝之心。",
        "from": "X07n0234_109:0914b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦二。",
        "from": "X07n0234_109:0914b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初見發心之境。",
        "from": "X07n0234_109:0914b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈於苦集。",
        "from": "X07n0234_109:0914b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子世尊往昔(至)不得值遇諸佛菩薩。",
        "from": "X07n0234_109:0914c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正發救心。",
        "from": "X07n0234_109:0914c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得滅道二。",
        "from": "X07n0234_109:0914c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初並起慈悲。",
        "from": "X07n0234_109:0914c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見如是已起大悲心(至)於一切因緣無迷惑心。",
        "from": "X07n0234_109:0914c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二雙運悲智。",
        "from": "X07n0234_109:0914c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起觀察真□□性心(至)究竟皆得十力智果心。",
        "from": "X07n0234_109:0914c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二起善巧普攝之行二。",
        "from": "X07n0234_109:0914c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初別明利益眾生行三。",
        "from": "X07n0234_109:0914c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初本攝生行體。",
        "from": "X07n0234_109:0914c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起如是心已得菩薩力(至)不悔不悋無間無斷。",
        "from": "X07n0234_109:0914c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二明攝生本意。",
        "from": "X07n0234_109:0914c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是方便普攝眾生(至)增一切智福德大海。",
        "from": "X07n0234_109:0914c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二辨攝生周徧。",
        "from": "X07n0234_109:0914c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即廣大義。",
        "from": "X07n0234_109:0914c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如是念念成熟(至)隨眾生心普使知見。",
        "from": "X07n0234_109:0914c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二雜明種種行二。",
        "from": "X07n0234_109:0914c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明觀機。",
        "from": "X07n0234_109:0914c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彰苦集無涯。",
        "from": "X07n0234_109:0914c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子毗盧遮那如來(至)具受種種無量諸苦。",
        "from": "X07n0234_109:0914c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二顯修行無量三。",
        "from": "X07n0234_109:0914c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總明化益。",
        "from": "X07n0234_109:0914c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大悲心具修一切(至)勤修福智助道之法。",
        "from": "X07n0234_109:0914c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別明化法。",
        "from": "X07n0234_109:0914c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說種種諸因果門(至)趣一切智助道之法。",
        "from": "X07n0234_109:0914c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三總結化意。",
        "from": "X07n0234_109:0914c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生心生歡喜(至)令其安住菩薩智慧。",
        "from": "X07n0234_109:0914c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四辨法根深二。",
        "from": "X07n0234_109:0914c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初問。",
        "from": "X07n0234_109:0914c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財童子言聖者(至)三菩提心其已久如。",
        "from": "X07n0234_109:0914c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二答二。",
        "from": "X07n0234_109:0914c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初歎深許說二。",
        "from": "X07n0234_109:0914c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初長行二。",
        "from": "X07n0234_109:0914c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先歎深難知四。",
        "from": "X07n0234_109:0914c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標難知。",
        "from": "X07n0234_109:0914c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜神言善男子。",
        "from": "X07n0234_109:0915a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非唯久遠難知。",
        "from": "X07n0234_109:0915a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抑亦當時發心。",
        "from": "X07n0234_109:0915a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得深法。",
        "from": "X07n0234_109:0915a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿佛境故。",
        "from": "X07n0234_109:0915a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況無久近相。",
        "from": "X07n0234_109:0915a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此處難信。",
        "from": "X07n0234_109:0915a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非常見聞。",
        "from": "X07n0234_109:0915a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難知。",
        "from": "X07n0234_109:0915a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非聞慧境。",
        "from": "X07n0234_109:0915a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難解難入。",
        "from": "X07n0234_109:0915a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非思修故。",
        "from": "X07n0234_109:0915a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上皆心緣處滅。",
        "from": "X07n0234_109:0915a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難說。",
        "from": "X07n0234_109:0915a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言語道。",
        "from": "X07n0234_109:0915a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二顯不知人。",
        "from": "X07n0234_109:0915a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間及以二乘皆不能知。",
        "from": "X07n0234_109:0915a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三揀去能知。",
        "from": "X07n0234_109:0915a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除諸佛神力所護(至)於此能持能入能了。",
        "from": "X07n0234_109:0915a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是善財童子之類。",
        "from": "X07n0234_109:0915a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四徵釋所以。",
        "from": "X07n0234_109:0915a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故此是如來智慧境界(至)尚不能知□餘眾生。",
        "from": "X07n0234_109:0915a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是佛境故。",
        "from": "X07n0234_109:0915a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權教菩薩尚不能知。",
        "from": "X07n0234_109:0915a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況前劣耶。",
        "from": "X07n0234_109:0915a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二承力許說。",
        "from": "X07n0234_109:0915a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然我今者以佛威力(至)隨汝所問為汝宣說。",
        "from": "X07n0234_109:0915a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二偈頌分二。",
        "from": "X07n0234_109:0915a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初頌歎深難說。",
        "from": "X07n0234_109:0915a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四。",
        "from": "X07n0234_109:0915a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初標深難說。",
        "from": "X07n0234_109:0915a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時開敷一切樹華夜神(至)而說頌言。",
        "from": "X07n0234_109:0915a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子汝所問甚深佛境界難思剎塵劫說之不可盡。",
        "from": "X07n0234_109:0915a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有三偈。",
        "from": "X07n0234_109:0915a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌不知人。",
        "from": "X07n0234_109:0915a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非是貪恚癡憍慢惑所覆(至)能知佛所覺。",
        "from": "X07n0234_109:0915a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是佛境故。",
        "from": "X07n0234_109:0915b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惑者不知。",
        "from": "X07n0234_109:0915b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三超頌前釋。",
        "from": "X07n0234_109:0915b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛境界寂靜性淨離分別非著請有者能知此法性。",
        "from": "X07n0234_109:0915b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有十四偈。",
        "from": "X07n0234_109:0915b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總頌揀去能知。",
        "from": "X07n0234_109:0915b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生於諸佛家為佛所守護(至)是彼之境界。",
        "from": "X07n0234_109:0915b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心寂靜住三昧(至)此無礙眼之解脫。",
        "from": "X07n0234_109:0915b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第頌前佛力所護等。",
        "from": "X07n0234_109:0915b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐繁不配。",
        "from": "X07n0234_109:0915b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說者隨宜。",
        "from": "X07n0234_109:0915b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二頌承力為說。",
        "from": "X07n0234_109:0915b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於無量大劫海(至)今汝深心轉清淨。",
        "from": "X07n0234_109:0915b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二承力正詶。",
        "from": "X07n0234_109:0915b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_109:0915b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初長行二。",
        "from": "X07n0234_109:0915b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初正說四。",
        "from": "X07n0234_109:0915b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總顯發心時處佛興。",
        "from": "X07n0234_109:0915b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子乃往古世(至)說種種法門度無量眾生。",
        "from": "X07n0234_109:0915b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別舉本生時處。",
        "from": "X07n0234_109:0915b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子彼普光明真金(至)閻浮提人壽萬歲時。",
        "from": "X07n0234_109:0915b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三明發心勝緣四。",
        "from": "X07n0234_109:0915b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初大王治化。",
        "from": "X07n0234_109:0915b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中有王名一切法音(至)閻浮提內無有怨敵。",
        "from": "X07n0234_109:0915b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即鐵輪王。",
        "from": "X07n0234_109:0915b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云閻浮。",
        "from": "X07n0234_109:0915b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二五濁為因。",
        "from": "X07n0234_109:0915b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感三災果。",
        "from": "X07n0234_109:0915b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼世界劫欲盡時(至)一切人眾壽命矩促。",
        "from": "X07n0234_109:0915b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命濁。",
        "from": "X07n0234_109:0915b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資財乏少形色鄙陋多苦少樂。",
        "from": "X07n0234_109:0915b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生濁。",
        "from": "X07n0234_109:0915b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不修十善專作惡業(至)離他眷屬妬他榮好。",
        "from": "X07n0234_109:0915b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱濁。",
        "from": "X07n0234_109:0915b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任情起見非法貪求(至)馳走四方靡所依怙。",
        "from": "X07n0234_109:0915b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見濁劫濁則通。",
        "from": "X07n0234_109:0915b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三悲境現前。",
        "from": "X07n0234_109:0915b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸來共繞王都大城(至)獲財利想升天宮想。",
        "from": "X07n0234_109:0915c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四正明起行二初深起大悲。",
        "from": "X07n0234_109:0915c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大王聞此語已(至)令其得入一切智門。",
        "from": "X07n0234_109:0915c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二廣行大施八。",
        "from": "X07n0234_109:0915c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初施令彌布。",
        "from": "X07n0234_109:0915c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是語已擊鼓宣令(至)內外所有悉皆能捨。",
        "from": "X07n0234_109:0915c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二施會大敷。",
        "from": "X07n0234_109:0915c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其堅固妙寶莊巖雲燈城(至)勸諸眾生修行善業。",
        "from": "X07n0234_109:0915c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三施主超倫。",
        "from": "X07n0234_109:0915c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼大王處師子座(至)以致治國無違命者。",
        "from": "X07n0234_109:0915c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四施田雲集。",
        "from": "X07n0234_109:0915c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時閻浮提無量無數(至)住菩薩願行廣大施。",
        "from": "X07n0234_109:0915c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五施心殷重。",
        "from": "X07n0234_109:0915c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時王見彼諸來乞者(至)心生歡喜亦復如是。",
        "from": "X07n0234_109:0915c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六施願深廣。",
        "from": "X07n0234_109:0915c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子其王爾時因善知識(至)行一切智無障礙道。",
        "from": "X07n0234_109:0915c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七施慧□微。",
        "from": "X07n0234_109:0915c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已能深入一切智流(至)生堅固想師想佛想。",
        "from": "X07n0234_109:0915c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八施時均普。",
        "from": "X07n0234_109:0915c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不揀方處不擇族類(至)皆悉如是普施眾生。",
        "from": "X07n0234_109:0915c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣佛華嚴經疏卷第一百九",
        "from": "X07n0234_109:0915c21_0",
        "context_with_next_sentence": false
    }
]