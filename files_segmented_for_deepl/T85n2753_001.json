[
    {
        "source_sentence": "華嚴經章",
        "from": "T85n2753_001:0205b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奧妙紹名□□□□□□□□□□□□□□□□□無相之相□□□□□□□□□□□□□□□□□□並舉名號以□□□□□□□起□□非在外。",
        "from": "T85n2753_001:0205b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以即□□□□□□□□□□□□□□□□外故。",
        "from": "T85n2753_001:0205b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以即實故名名號品□□□□□□□□□□□□。",
        "from": "T85n2753_001:0205b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四諦品第四就此品中前後　□□□□□□□□□□准後列十方名號就文可知。",
        "from": "T85n2753_001:0205b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相旨意□□□□□□□。",
        "from": "T85n2753_001:0205b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明覺品第五此品所以興者。",
        "from": "T85n2753_001:0205b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上之二品廣□□□理旨之相。",
        "from": "T85n2753_001:0205b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正明佛果。",
        "from": "T85n2753_001:0205b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契實妙用周於法界。",
        "from": "T85n2753_001:0205b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但義苞潤囑諒非玄悟。",
        "from": "T85n2753_001:0205b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要由大聖神通道力微見其像。",
        "from": "T85n2753_001:0205b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃有寄心。",
        "from": "T85n2753_001:0205b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以如來從足下相輪放大光明。",
        "from": "T85n2753_001:0205b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現真實相含零有心無不啟悟。",
        "from": "T85n2753_001:0205b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義故首[標*寸]名曰光明覺品。",
        "from": "T85n2753_001:0205b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明難品第六此品所以興者。",
        "from": "T85n2753_001:0205b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上顯光明覺品現證之驗。",
        "from": "T85n2753_001:0205b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但前菩提圓寂真際之實。",
        "from": "T85n2753_001:0205b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而顯在於法界名品。",
        "from": "T85n2753_001:0205b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然法界名號者。",
        "from": "T85n2753_001:0205b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是無相之相。",
        "from": "T85n2753_001:0205b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相即之實。",
        "from": "T85n2753_001:0205c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生海者。",
        "from": "T85n2753_001:0205c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如是。",
        "from": "T85n2753_001:0205c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此旨沖妙難中之難。",
        "from": "T85n2753_001:0205c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以文殊師利。",
        "from": "T85n2753_001:0205c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸方大士詳參爾迹且舉十種諮門。",
        "from": "T85n2753_001:0205c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一隨義說正答深旨得彰故曰明難品。",
        "from": "T85n2753_001:0205c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨行品第七此品所以興者。",
        "from": "T85n2753_001:0205c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明圓果微妙非因不對因。",
        "from": "T85n2753_001:0205c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無量無非淨行故。",
        "from": "T85n2753_001:0205c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明淨行品。",
        "from": "T85n2753_001:0205c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢首菩薩品第八此品所以興者。",
        "from": "T85n2753_001:0205c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊上明行要清淨。",
        "from": "T85n2753_001:0205c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中廣大深義其相未彰故。",
        "from": "T85n2753_001:0205c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問賢首敷演其奧故。",
        "from": "T85n2753_001:0205c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第八明賢首品。",
        "from": "T85n2753_001:0205c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛昇須彌頂品第九此品所以興者。",
        "from": "T85n2753_001:0205c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明佛果真實之德。",
        "from": "T85n2753_001:0205c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略辨回行方便。",
        "from": "T85n2753_001:0205c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會果之道。",
        "from": "T85n2753_001:0205c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自下復明如來至寂虛凝而用周法界。",
        "from": "T85n2753_001:0205c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以知之。",
        "from": "T85n2753_001:0205c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然不起道樹之於六天。",
        "from": "T85n2753_001:0205c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃十方亦復如是。",
        "from": "T85n2753_001:0205c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後欲廣辨菩薩行位超昇有實出要故。",
        "from": "T85n2753_001:0205c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明昇須彌品。",
        "from": "T85n2753_001:0205c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩雲集品第十此品所以興者。",
        "from": "T85n2753_001:0205c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前明十方法界一合之相。",
        "from": "T85n2753_001:0205c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品欲明平等真寂一切皆是。",
        "from": "T85n2753_001:0205c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故大士十菩薩。",
        "from": "T85n2753_001:0205c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆據實觀窮玄乃名見佛泯於分別。",
        "from": "T85n2753_001:0205c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故然也。",
        "from": "T85n2753_001:0205c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明菩薩發菩提心決定即是與佛無別故。",
        "from": "T85n2753_001:0205c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明雲集品。",
        "from": "T85n2753_001:0205c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩十住品第十一此品所以興者。",
        "from": "T85n2753_001:0205c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前明真寂無相妙絕分別為開大士菩提圓道。",
        "from": "T85n2753_001:0205c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故有心曉達其趣。",
        "from": "T85n2753_001:0205c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "創發弘誓心冥大寂安固不動。",
        "from": "T85n2753_001:0205c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之為住故。",
        "from": "T85n2753_001:0205c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明十住品也。",
        "from": "T85n2753_001:0205c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行品第十二此品所以興者。",
        "from": "T85n2753_001:0205c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明心冥大寂安固不動成就住義。",
        "from": "T85n2753_001:0205c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明真實證修決定勝集。",
        "from": "T85n2753_001:0205c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發心時便成正覺故。",
        "from": "T85n2753_001:0205c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明梵行品。",
        "from": "T85n2753_001:0205c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德品第十三此品所以興者。",
        "from": "T85n2753_001:0205c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明梵行是之至寂真實之體。",
        "from": "T85n2753_001:0205c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品明功德是方便莊嚴。",
        "from": "T85n2753_001:0206a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前彰行體清淨平等。",
        "from": "T85n2753_001:0206a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此顯備用殊致義福塵沙故。",
        "from": "T85n2753_001:0206a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明功德品。",
        "from": "T85n2753_001:0206a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明法品第十四此品所以興者。",
        "from": "T85n2753_001:0206a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明梵行功德體。",
        "from": "T85n2753_001:0206a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義廣大發與佛同理宜勝進。",
        "from": "T85n2753_001:0206a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以惠菩薩。",
        "from": "T85n2753_001:0206a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問於法惠廣辨超昇增上之道。",
        "from": "T85n2753_001:0206a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相彰顯故。",
        "from": "T85n2753_001:0206a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰明法品也。",
        "from": "T85n2753_001:0206a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇夜摩天宮自在品第十五此品所以興者。",
        "from": "T85n2753_001:0206a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前明十二種法。",
        "from": "T85n2753_001:0206a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是勝進之道。",
        "from": "T85n2753_001:0206a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲彰勇猛大士。",
        "from": "T85n2753_001:0206a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥心玄會不由階降故。",
        "from": "T85n2753_001:0206a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明昇夜摩宮自在品也。",
        "from": "T85n2753_001:0206a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩說偈品第十六此說偈起意法用旨況與上相似。",
        "from": "T85n2753_001:0206a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但名品行位處別為異。",
        "from": "T85n2753_001:0206a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准上可知。",
        "from": "T85n2753_001:0206a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十行品第十七此十行品與前十住有何異相。",
        "from": "T85n2753_001:0206a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十住明信解發心決定相應。",
        "from": "T85n2753_001:0206a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此十行明行成建立往待之義。",
        "from": "T85n2753_001:0206a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故知也。",
        "from": "T85n2753_001:0206a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫解明由行懃行成。",
        "from": "T85n2753_001:0206a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由於解悟解行相須理數然矣。",
        "from": "T85n2753_001:0206a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為發起次第故。",
        "from": "T85n2753_001:0206a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言解行者位也。",
        "from": "T85n2753_001:0206a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂性真明義。",
        "from": "T85n2753_001:0206a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拘齊觀解行冥符同融一揆。",
        "from": "T85n2753_001:0206a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法界海臨玄靡注故言解行。",
        "from": "T85n2753_001:0206a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名迴向。",
        "from": "T85n2753_001:0206a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非謂先後之異。",
        "from": "T85n2753_001:0206a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫言行者。",
        "from": "T85n2753_001:0206a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體道歸宗安心虛寂土已懷仁無不進達。",
        "from": "T85n2753_001:0206a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復縱電於八荒之野。",
        "from": "T85n2753_001:0206a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不為非緣所羇慈光等曜十方同一統萬乘於焂忽總眾相於一念不動。",
        "from": "T85n2753_001:0206a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大山王而常熾然。",
        "from": "T85n2753_001:0206a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進如斯之義相非量。",
        "from": "T85n2753_001:0206a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2753_001:0206a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前十住初發心諸佛說所不窮。",
        "from": "T85n2753_001:0206a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況此行成建立。",
        "from": "T85n2753_001:0206a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名言能盡品。",
        "from": "T85n2753_001:0206a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次相接與十住義一。",
        "from": "T85n2753_001:0206a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但行位為異。",
        "from": "T85n2753_001:0206a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十藏品第十八此品所興者。",
        "from": "T85n2753_001:0206a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上辨十行超昇增上究竟徹到至融無礙冥心真境法界藏海故。",
        "from": "T85n2753_001:0206a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明十種無盡之藏為成上辨十種之行。",
        "from": "T85n2753_001:0206b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故復明十種藏義。",
        "from": "T85n2753_001:0206b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十藏者。",
        "from": "T85n2753_001:0206b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一信藏。",
        "from": "T85n2753_001:0206b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰戒藏。",
        "from": "T85n2753_001:0206b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰慚藏。",
        "from": "T85n2753_001:0206b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四曰愧藏。",
        "from": "T85n2753_001:0206b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五曰受聞藏。",
        "from": "T85n2753_001:0206b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六曰施藏。",
        "from": "T85n2753_001:0206b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七曰惠藏。",
        "from": "T85n2753_001:0206b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八曰正念藏。",
        "from": "T85n2753_001:0206b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九曰持藏。",
        "from": "T85n2753_001:0206b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十曰辨藏。",
        "from": "T85n2753_001:0206b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為十。",
        "from": "T85n2753_001:0206b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫言藏者。",
        "from": "T85n2753_001:0206b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是法海之名。",
        "from": "T85n2753_001:0206b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故名藏。",
        "from": "T85n2753_001:0206b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明宗無不統義無不苞德。",
        "from": "T85n2753_001:0206b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備眾能理相恒爾故名藏。",
        "from": "T85n2753_001:0206b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次名十藏品。",
        "from": "T85n2753_001:0206b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昇兜率天宮品第十九此品所以興者。",
        "from": "T85n2753_001:0206b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上辨十種藏海。",
        "from": "T85n2753_001:0206b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明理行始成勝進轉妙真解踰明解行冥府方便道備正證無漏自然現前。",
        "from": "T85n2753_001:0206b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以寄一生之運。",
        "from": "T85n2753_001:0206b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以表其義故次明也。",
        "from": "T85n2753_001:0206b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十迴向品二十一并讚歎品義勢相此品所以興者。",
        "from": "T85n2753_001:0206b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明行成。",
        "from": "T85n2753_001:0206b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由於理資真解非行不顯解行。",
        "from": "T85n2753_001:0206b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "均融菩提道立誓與眾生同之。",
        "from": "T85n2753_001:0206b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛果雖未究竟不住意成。",
        "from": "T85n2753_001:0206b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故一豪之善自然趣向薩婆若海故。",
        "from": "T85n2753_001:0206b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明迴向品。",
        "from": "T85n2753_001:0206b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此十迴向中有三文。",
        "from": "T85n2753_001:0206b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初三就法明迴向。",
        "from": "T85n2753_001:0206b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次三據道以明向。",
        "from": "T85n2753_001:0206b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後三就乘明向。",
        "from": "T85n2753_001:0206b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十法界無量者。",
        "from": "T85n2753_001:0206b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備上三義法界海行具足成就。",
        "from": "T85n2753_001:0206b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣證之義非言能盡故。",
        "from": "T85n2753_001:0206b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云法界無量迴向。",
        "from": "T85n2753_001:0206b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地品第二十二此品所以興者。",
        "from": "T85n2753_001:0206b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前迴向中明大士解達玄原無有一法可起志想行煩虛宗。",
        "from": "T85n2753_001:0206b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至不見一相可存。",
        "from": "T85n2753_001:0206b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以行滿惠超成就實證理。",
        "from": "T85n2753_001:0206b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現心用一切皆是故次明也。",
        "from": "T85n2753_001:0206b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言地者。",
        "from": "T85n2753_001:0206b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定生成佛知住持。",
        "from": "T85n2753_001:0206b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以常起四種大智□輸被化眾生。",
        "from": "T85n2753_001:0206b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復自建立五種那羅延幢。",
        "from": "T85n2753_001:0206b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義故名之為地。",
        "from": "T85n2753_001:0206b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰十地品也。",
        "from": "T85n2753_001:0206b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十明品第二十三此品所以興。",
        "from": "T85n2753_001:0206b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上辨十地大士德行彌輸道無不備故。",
        "from": "T85n2753_001:0206b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法性為身圓照為用。",
        "from": "T85n2753_001:0206b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切法皆悉了達。",
        "from": "T85n2753_001:0206c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彰此義故次辨十明品。",
        "from": "T85n2753_001:0206c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就中大意不出三明寄六通廣之為十。",
        "from": "T85n2753_001:0206c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以知然。",
        "from": "T85n2753_001:0206c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下結云。",
        "from": "T85n2753_001:0206c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩住此知明悉得三世無閡智明。",
        "from": "T85n2753_001:0206c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中一一廣解其義可知。",
        "from": "T85n2753_001:0206c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初名善知他心知明。",
        "from": "T85n2753_001:0206c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達一切眾生心相差別。",
        "from": "T85n2753_001:0206c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二無閡天眼智明。",
        "from": "T85n2753_001:0206c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來境界迴轉死此生彼。",
        "from": "T85n2753_001:0206c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能都見。",
        "from": "T85n2753_001:0206c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三入過去際無礙宿命智明。",
        "from": "T85n2753_001:0206c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過明去一切眾生一切事一切佛坐菩薩坐菩提樹。",
        "from": "T85n2753_001:0206c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至或正覺一切諸佛從初發心修行。",
        "from": "T85n2753_001:0206c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得無餘涅槃。",
        "from": "T85n2753_001:0206c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸事悉能了知。",
        "from": "T85n2753_001:0206c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第深入未來際劫無礙智明。",
        "from": "T85n2753_001:0206c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前但明如來境界迴轉。",
        "from": "T85n2753_001:0206c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云諸事悉能了知。",
        "from": "T85n2753_001:0206c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切未來世中所有事與過去同。",
        "from": "T85n2753_001:0206c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五無礙清淨天耳知明。",
        "from": "T85n2753_001:0206c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方一切音聲乃至句味悉能聞知皆不妄失。",
        "from": "T85n2753_001:0206c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六安住無畏神力智明。",
        "from": "T85n2753_001:0206c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是神通相。",
        "from": "T85n2753_001:0206c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七分別一切言音智明。",
        "from": "T85n2753_001:0206c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八出生無量阿僧祇色身莊嚴智明。",
        "from": "T85n2753_001:0206c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九一切諸法真實智明。",
        "from": "T85n2753_001:0206c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十一切諸法定智明。",
        "from": "T85n2753_001:0206c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十忍品第二十四此品所以興者。",
        "from": "T85n2753_001:0206c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上辨圓照之明了達諸法。",
        "from": "T85n2753_001:0206c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此顯實解平等正住無生安心。",
        "from": "T85n2753_001:0206c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於理名之為忍。",
        "from": "T85n2753_001:0206c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨相而明故云十忍品。",
        "from": "T85n2753_001:0206c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇品第二十五此品所以興者。",
        "from": "T85n2753_001:0206c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來廣辨諸佛菩薩德行彌博無量無邊不可思議。",
        "from": "T85n2753_001:0206c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆云阿僧祇。",
        "from": "T85n2753_001:0206c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至不可說。",
        "from": "T85n2753_001:0206c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示其行況未釋所以。",
        "from": "T85n2753_001:0206c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故如來敷演此義故次明也。",
        "from": "T85n2753_001:0206c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命品第二十六此品所以興者。",
        "from": "T85n2753_001:0206c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明德行彌廣不可稱說。",
        "from": "T85n2753_001:0206c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明德以行成人以得立人法成用道被無窮道德既無窮盡。",
        "from": "T85n2753_001:0206c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命義亦同然。",
        "from": "T85n2753_001:0206c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故次明壽命品也。",
        "from": "T85n2753_001:0206c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩住處品第二十七此品所以興者。",
        "from": "T85n2753_001:0207a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明菩薩充滿德行壽命無中無邊法身平等以無住為住。",
        "from": "T85n2753_001:0207a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以次明菩薩住處品。",
        "from": "T85n2753_001:0207a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法不思議品第二十八此品所以興者。",
        "from": "T85n2753_001:0207a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來廣明菩薩德行既不可思議。",
        "from": "T85n2753_001:0207a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而未知諸佛功德義。",
        "from": "T85n2753_001:0207a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復云何故。",
        "from": "T85n2753_001:0207a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次更明不思議品。",
        "from": "T85n2753_001:0207a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就中明如來八種離聲者。",
        "from": "T85n2753_001:0207a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰梵聲。",
        "from": "T85n2753_001:0207a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰深聲。",
        "from": "T85n2753_001:0207a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰遠聲。",
        "from": "T85n2753_001:0207a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三是聲體。",
        "from": "T85n2753_001:0207a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次三就喻。",
        "from": "T85n2753_001:0207a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如鼓聲。",
        "from": "T85n2753_001:0207a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其音洪韻。",
        "from": "T85n2753_001:0207a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二如種聲。",
        "from": "T85n2753_001:0207a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其音嚮亮。",
        "from": "T85n2753_001:0207a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三如金零聲。",
        "from": "T85n2753_001:0207a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其音清辨。",
        "from": "T85n2753_001:0207a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘有二聲疑。",
        "from": "T85n2753_001:0207a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰鳥聲。",
        "from": "T85n2753_001:0207a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰三尺鳥聲。",
        "from": "T85n2753_001:0207a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相海品第二十九此品一時興者。",
        "from": "T85n2753_001:0207a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上辨佛法不思議者。",
        "from": "T85n2753_001:0207a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明體融無礙。",
        "from": "T85n2753_001:0207a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云海者。",
        "from": "T85n2753_001:0207a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲明相無不實融無礙故則無體而不義相無不實故則無義而不體體無不義故則一體一切體義無不體故則一義一切義。",
        "from": "T85n2753_001:0207a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以體無體相義無義相體義融。",
        "from": "T85n2753_001:0207a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼此眾用則無相不相。",
        "from": "T85n2753_001:0207a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今據實相以彰妙德故云相海品。",
        "from": "T85n2753_001:0207a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小相品第三十此品與上者異。",
        "from": "T85n2753_001:0207a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是拔別之名。",
        "from": "T85n2753_001:0207a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好則隨緣如是以表彰曰相情玩曰如。",
        "from": "T85n2753_001:0207a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准此義以小[標*寸]別故云小相品。",
        "from": "T85n2753_001:0207a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩行品第三十一此品所以興者。",
        "from": "T85n2753_001:0207a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明果德稱法界海無中無邊。",
        "from": "T85n2753_001:0207a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自非圓因窮於實際何由能契。",
        "from": "T85n2753_001:0207a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以圓果既彰圓因須顯故次明也。",
        "from": "T85n2753_001:0207a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可言。",
        "from": "T85n2753_001:0207a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是果行寄因彰名。",
        "from": "T85n2753_001:0207a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2753_001:0207a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量周法界名之為普。",
        "from": "T85n2753_001:0207a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至順調柔謂之為賢。",
        "from": "T85n2753_001:0207a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提道用名之為行故。",
        "from": "T85n2753_001:0207a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言普賢菩薩行品。",
        "from": "T85n2753_001:0207a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶王如來性起品第三十二此品所以興者。",
        "from": "T85n2753_001:0207a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來廣辨圓因圓果。",
        "from": "T85n2753_001:0207a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓因稱於理實圓果等於後際因果妙絕之旨者。",
        "from": "T85n2753_001:0207a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂真性也。",
        "from": "T85n2753_001:0207b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故次明性起之義。",
        "from": "T85n2753_001:0207b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然性用未如如不起而真性古今恒爾。",
        "from": "T85n2753_001:0207b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以性用常起故。",
        "from": "T85n2753_001:0207b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即用而彌寂。",
        "from": "T85n2753_001:0207b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真性古今恒爾故。",
        "from": "T85n2753_001:0207b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即寂而喻彰。",
        "from": "T85n2753_001:0207b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂用既無障礙。",
        "from": "T85n2753_001:0207b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧有染淨之法而可得戒。",
        "from": "T85n2753_001:0207b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故真性為違順之原。",
        "from": "T85n2753_001:0207b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣集之本妙用以之而興妄相之而息如興廢出在妄情。",
        "from": "T85n2753_001:0207b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我未曾而為無為而為如無不為故。",
        "from": "T85n2753_001:0207b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言性起寶王者喻況也。",
        "from": "T85n2753_001:0207b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意自在名曰寶王。",
        "from": "T85n2753_001:0207b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真性亦爾。",
        "from": "T85n2753_001:0207b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來者就圓顯以彰性故言如來。",
        "from": "T85n2753_001:0207b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故名曰寶王如來性起品也。",
        "from": "T85n2753_001:0207b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離世間品第三十三此品所以興者。",
        "from": "T85n2753_001:0207b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上辨真性泯。",
        "from": "T85n2753_001:0207b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸法一切空寂。",
        "from": "T85n2753_001:0207b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬相歸宗圓明獨曜。",
        "from": "T85n2753_001:0207b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若唯寂無起便同太虛。",
        "from": "T85n2753_001:0207b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得為性體真明。",
        "from": "T85n2753_001:0207b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故復明義。",
        "from": "T85n2753_001:0207b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興後際法界等用用備眾能故名世間。",
        "from": "T85n2753_001:0207b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相可得謂之為離。",
        "from": "T85n2753_001:0207b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非是有法可離名為離也。",
        "from": "T85n2753_001:0207b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名離世間品。",
        "from": "T85n2753_001:0207b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入法界品第三十四此品所以興者。",
        "from": "T85n2753_001:0207b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上辨法界等用義興後際。",
        "from": "T85n2753_001:0207b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不在已雖妙何益。",
        "from": "T85n2753_001:0207b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故次明入法界。",
        "from": "T85n2753_001:0207b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義理相統目名為法界。",
        "from": "T85n2753_001:0207b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解融真寂謂之為入。",
        "from": "T85n2753_001:0207b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契用無礙名之為行。",
        "from": "T85n2753_001:0207b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛真子紹三寶種。",
        "from": "T85n2753_001:0207b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成流通不絕之義故名入法界品。",
        "from": "T85n2753_001:0207b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四弘誓文　菩提難入以願邀期。",
        "from": "T85n2753_001:0207b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以初發心菩薩。",
        "from": "T85n2753_001:0207b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將欲逝惡修善廣化眾生遠求佛果。",
        "from": "T85n2753_001:0207b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要以弘誓為本。",
        "from": "T85n2753_001:0207b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘誓既立。",
        "from": "T85n2753_001:0207b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則願無不從。",
        "from": "T85n2753_001:0207b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所讚。",
        "from": "T85n2753_001:0207b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大智遵演說功德證忍慧福業力誓願力。",
        "from": "T85n2753_001:0207b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝菩薩一誓過於聲聞百千劫行。",
        "from": "T85n2753_001:0207b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行願乃有無量。",
        "from": "T85n2753_001:0207b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略舉此四。",
        "from": "T85n2753_001:0207b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總收都盡。",
        "from": "T85n2753_001:0207b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T85n2753_001:0207b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者我弟子某甲。",
        "from": "T85n2753_001:0207b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓斷一切煩惱。",
        "from": "T85n2753_001:0207b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法甚深願盡其源底。",
        "from": "T85n2753_001:0207b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住二帝理相幽玄稱為甚深。",
        "from": "T85n2753_001:0207c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願窮理源斷惑斯盡。",
        "from": "T85n2753_001:0207c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不則斷弘誓力強。",
        "from": "T85n2753_001:0207c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生之處一切煩惱自然衰微。",
        "from": "T85n2753_001:0207c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以經言修心二。",
        "from": "T85n2753_001:0207c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常雖有煩惱如無煩惱。",
        "from": "T85n2753_001:0207c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是第一願。",
        "from": "T85n2753_001:0207c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者誓修一切功德。",
        "from": "T85n2753_001:0207c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死可畏願常樂處中。",
        "from": "T85n2753_001:0207c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世人不入臣海則不能得如意寶珠。",
        "from": "T85n2753_001:0207c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若不入生死臣海。",
        "from": "T85n2753_001:0207c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不能得佛果無假寶珠。",
        "from": "T85n2753_001:0207c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以大士至崇勝果願。",
        "from": "T85n2753_001:0207c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生入死廣修萬行。",
        "from": "T85n2753_001:0207c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不計眾苦願為種子總攝萬行。",
        "from": "T85n2753_001:0207c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於所生處一切善根自然收蔬稱願增長。",
        "from": "T85n2753_001:0207c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是第二願。",
        "from": "T85n2753_001:0207c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者誓度一切眾生。",
        "from": "T85n2753_001:0207c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生無邊願誓令度盡。",
        "from": "T85n2753_001:0207c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於怨捨怨。",
        "from": "T85n2753_001:0207c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於親捨親。",
        "from": "T85n2753_001:0207c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨親平等。",
        "from": "T85n2753_001:0207c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣行四攝願。",
        "from": "T85n2753_001:0207c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與法界眾生一時成佛。",
        "from": "T85n2753_001:0207c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既捨怨親普行大慈。",
        "from": "T85n2753_001:0207c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切怨毒惡心自滅。",
        "from": "T85n2753_001:0207c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內善勳修生在佛家種性尊貴無可譏慊。",
        "from": "T85n2753_001:0207c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是第三願。",
        "from": "T85n2753_001:0207c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者誓度一切種智。",
        "from": "T85n2753_001:0207c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道長遠。",
        "from": "T85n2753_001:0207c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其必獲得。",
        "from": "T85n2753_001:0207c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不以天勝果二乘涅槃而生足想。",
        "from": "T85n2753_001:0207c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世善根悉皆迴向。",
        "from": "T85n2753_001:0207c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上菩提不計劫數。",
        "from": "T85n2753_001:0207c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願以成佛為期。",
        "from": "T85n2753_001:0207c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既志願高遠。",
        "from": "T85n2753_001:0207c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不期世報。",
        "from": "T85n2753_001:0207c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所生處常處。",
        "from": "T85n2753_001:0207c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豪尊雖極世榮不生深著。",
        "from": "T85n2753_001:0207c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但願勝中勝道。",
        "from": "T85n2753_001:0207c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無",
        "from": "T85n2753_001:0207c20_12",
        "context_with_next_sentence": false
    }
]