[
    {
        "source_sentence": "御製序",
        "from": "X68n1319_007:0528a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋初杭州永明智覺禪師。",
        "from": "X68n1319_007:0528a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平生著述。",
        "from": "X68n1319_007:0528a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有宗鏡錄．唯心訣．心賦．萬善同歸等集。",
        "from": "X68n1319_007:0528a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡千萬言。",
        "from": "X68n1319_007:0528a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並在大藏。",
        "from": "X68n1319_007:0528a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有流傳海外者。",
        "from": "X68n1319_007:0528a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕披閱採錄。",
        "from": "X68n1319_007:0528a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不勝敬禮喜悅。",
        "from": "X68n1319_007:0528a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真所謂明逾曉日。",
        "from": "X68n1319_007:0528a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高越太清。",
        "from": "X68n1319_007:0528a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鼓師子弦。",
        "from": "X68n1319_007:0528a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾響俱絕。",
        "from": "X68n1319_007:0528a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如發摩尼寶。",
        "from": "X68n1319_007:0528a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五色生光。",
        "from": "X68n1319_007:0528a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信為曹溪後第一人。",
        "from": "X68n1319_007:0528a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超出歷代大善知識者。",
        "from": "X68n1319_007:0528a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特加封妙圓正修智覺禪師。",
        "from": "X68n1319_007:0528a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷中萬善同歸集一書。",
        "from": "X68n1319_007:0528a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪師自謂略述教海之一塵。",
        "from": "X68n1319_007:0528a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普施法界之含識云。",
        "from": "X68n1319_007:0528a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自師證明。",
        "from": "X68n1319_007:0528a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方知大小齊觀。",
        "from": "X68n1319_007:0528a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗教一貫。",
        "from": "X68n1319_007:0528a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但學人須必真參。",
        "from": "X68n1319_007:0528a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實有所悟。",
        "from": "X68n1319_007:0528a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃可觀此書。",
        "from": "X68n1319_007:0528a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教行持。",
        "from": "X68n1319_007:0528a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以普獨耀之神光。",
        "from": "X68n1319_007:0528a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓幻有之萬行。",
        "from": "X68n1319_007:0528a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所為無成之成。",
        "from": "X68n1319_007:0528a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不修之修。",
        "from": "X68n1319_007:0528a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無礙妙諦。",
        "from": "X68n1319_007:0528a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有益圓證。",
        "from": "X68n1319_007:0528a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若未能解縛俱空。",
        "from": "X68n1319_007:0528a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境智雙泯。",
        "from": "X68n1319_007:0528a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必依情起識。",
        "from": "X68n1319_007:0528a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執相求詮。",
        "from": "X68n1319_007:0528a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則墮鐵圍之山。",
        "from": "X68n1319_007:0528a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉迷真覺之海。",
        "from": "X68n1319_007:0528a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪師云。",
        "from": "X68n1319_007:0528a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先明其宗。",
        "from": "X68n1319_007:0528a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方能進道。",
        "from": "X68n1319_007:0528a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一向逐末。",
        "from": "X68n1319_007:0528a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實有所妨。",
        "from": "X68n1319_007:0528a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則此書未經參悟。",
        "from": "X68n1319_007:0528a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不必觀讀。",
        "from": "X68n1319_007:0528a18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本禪師之志也。",
        "from": "X68n1319_007:0528a18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕既刊其全書。",
        "from": "X68n1319_007:0528a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頒示宗徒。",
        "from": "X68n1319_007:0528a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又採其至言。",
        "from": "X68n1319_007:0528a19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "附於本集。",
        "from": "X68n1319_007:0528a19_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因恐疑悞初學。",
        "from": "X68n1319_007:0528a19_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故又指述於此。",
        "from": "X68n1319_007:0528a20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍正十一年癸丑六月望日",
        "from": "X68n1319_007:0528a21_0",
        "context_with_next_sentence": false
    }
]