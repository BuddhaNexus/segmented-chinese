[
    {
        "source_sentence": "大般涅槃經集解卷第三十五",
        "from": "T37n1763_035:0493a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　釋從佛出十二部經從十二部經出脩多羅從脩多羅出方等經從方等經出波若從波若出涅槃義出菩薩在雪山為半偈捨身緣起聖行品之第九爾時眾中有一菩薩(至)阿耨多羅三藐三菩提。",
        "from": "T37n1763_035:0493a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_035:0493a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_035:0493a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經明復說經功德。",
        "from": "T37n1763_035:0493a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸人行經。",
        "from": "T37n1763_035:0493a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經即法也。",
        "from": "T37n1763_035:0493a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行法雖由人。",
        "from": "T37n1763_035:0493a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然滅惡由法也。",
        "from": "T37n1763_035:0493a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬藥能治病。",
        "from": "T37n1763_035:0493a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖由人能服。",
        "from": "T37n1763_035:0493a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然去病之力在藥也。",
        "from": "T37n1763_035:0493a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以法華經云。",
        "from": "T37n1763_035:0493a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若罵佛者。",
        "from": "T37n1763_035:0493a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人罪輕。",
        "from": "T37n1763_035:0493a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀經法者。",
        "from": "T37n1763_035:0493a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪則重也。",
        "from": "T37n1763_035:0493a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_035:0493a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第四段歎經流通也。",
        "from": "T37n1763_035:0493a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四翻。",
        "from": "T37n1763_035:0493a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一無垢藏王歎。",
        "from": "T37n1763_035:0493a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二佛自歎。",
        "from": "T37n1763_035:0493a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三迦葉歎。",
        "from": "T37n1763_035:0493a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四佛引證。",
        "from": "T37n1763_035:0493a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成迦葉所歎也。",
        "from": "T37n1763_035:0493a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即第一無垢王歎。",
        "from": "T37n1763_035:0493a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時佛讚言善哉善哉(至)無量無邊不可稱計。",
        "from": "T37n1763_035:0493a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_035:0493a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_035:0493a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教從小起。",
        "from": "T37n1763_035:0493a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛譬佛也。",
        "from": "T37n1763_035:0493a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳譬三藏。",
        "from": "T37n1763_035:0493a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酪譬三乘雜說也。",
        "from": "T37n1763_035:0493a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生蘇譬方等。",
        "from": "T37n1763_035:0493a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熟蘇譬說空般若。",
        "from": "T37n1763_035:0493a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醍醐譬涅槃經法也。",
        "from": "T37n1763_035:0493a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法難見者。",
        "from": "T37n1763_035:0493a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空有也。",
        "from": "T37n1763_035:0493a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以般若說空。",
        "from": "T37n1763_035:0493a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃說有也。",
        "from": "T37n1763_035:0493a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛難見涅槃。",
        "from": "T37n1763_035:0493a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為勝尊重讚歎也。",
        "from": "T37n1763_035:0493a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_035:0493a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖行所以而成功。",
        "from": "T37n1763_035:0493a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由經力。",
        "from": "T37n1763_035:0493a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生人圓解也。",
        "from": "T37n1763_035:0493a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如從牛出乳者。",
        "from": "T37n1763_035:0493a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說小乘四諦法輪。",
        "from": "T37n1763_035:0493a28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是成佛十二年中說也。",
        "from": "T37n1763_035:0493a29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從乳出酪者。",
        "from": "T37n1763_035:0493a29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂十二年後。",
        "from": "T37n1763_035:0493b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說三乘通教。",
        "from": "T37n1763_035:0493b01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大品經是也。",
        "from": "T37n1763_035:0493b01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酪出生蘇者。",
        "from": "T37n1763_035:0493b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如思益維摩。",
        "from": "T37n1763_035:0493b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抑挫二乘。",
        "from": "T37n1763_035:0493b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱揚菩薩也。",
        "from": "T37n1763_035:0493b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從生蘇出熟蘇者。",
        "from": "T37n1763_035:0493b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法花破無三因果也。",
        "from": "T37n1763_035:0493b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此經明佛性常住。",
        "from": "T37n1763_035:0493b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮理盡性。",
        "from": "T37n1763_035:0493b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如醍醐也。",
        "from": "T37n1763_035:0493b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又出十二部者。",
        "from": "T37n1763_035:0493b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小乘十二部也。",
        "from": "T37n1763_035:0493b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從十二部出脩多羅者。",
        "from": "T37n1763_035:0493b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空教脩多羅也。",
        "from": "T37n1763_035:0493b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但言脩多羅者。",
        "from": "T37n1763_035:0493b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝十二部故。",
        "from": "T37n1763_035:0493b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但言本耳。",
        "from": "T37n1763_035:0493b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出方等理正不耶。",
        "from": "T37n1763_035:0493b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二乘等學般若。",
        "from": "T37n1763_035:0493b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以通教。",
        "from": "T37n1763_035:0493b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為方等也。",
        "from": "T37n1763_035:0493b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出般若者。",
        "from": "T37n1763_035:0493b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一乘實慧般若也。",
        "from": "T37n1763_035:0493b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從般若出大涅槃者。",
        "from": "T37n1763_035:0493b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即今教也。",
        "from": "T37n1763_035:0493b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一解云。",
        "from": "T37n1763_035:0493b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經文小誤。",
        "from": "T37n1763_035:0493b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若應為第三。",
        "from": "T37n1763_035:0493b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方等應在第四也。",
        "from": "T37n1763_035:0493b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_035:0493b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛如牛也。",
        "from": "T37n1763_035:0493b11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五味譬五時教也。",
        "from": "T37n1763_035:0493b11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛初出世。",
        "from": "T37n1763_035:0493b12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二年中。",
        "from": "T37n1763_035:0493b12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小乘三藏。",
        "from": "T37n1763_035:0493b12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別相說法輪。",
        "from": "T37n1763_035:0493b12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置出世之教。",
        "from": "T37n1763_035:0493b13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始當十二部之名也。",
        "from": "T37n1763_035:0493b13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從十二年後。",
        "from": "T37n1763_035:0493b13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通教門中。",
        "from": "T37n1763_035:0493b14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨空有。",
        "from": "T37n1763_035:0493b14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明真俗二諦。",
        "from": "T37n1763_035:0493b14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理既深廣。",
        "from": "T37n1763_035:0493b14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如從乳出酪。",
        "from": "T37n1763_035:0493b15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二諦是空解之主。",
        "from": "T37n1763_035:0493b15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是萬解之本。",
        "from": "T37n1763_035:0493b15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以當脩多羅名也。",
        "from": "T37n1763_035:0493b16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但自通教之前。",
        "from": "T37n1763_035:0493b16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直明因果。",
        "from": "T37n1763_035:0493b17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義不辨二諦。",
        "from": "T37n1763_035:0493b17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忘相故不與本之稱。",
        "from": "T37n1763_035:0493b17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從脩多羅出方等經者。",
        "from": "T37n1763_035:0493b18_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自通教說後。",
        "from": "T37n1763_035:0493b18_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述維摩思益。",
        "from": "T37n1763_035:0493b18_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進聲聞行。",
        "from": "T37n1763_035:0493b19_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令捨執得解。",
        "from": "T37n1763_035:0493b19_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以方等經。",
        "from": "T37n1763_035:0493b19_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如從酪出生蘇也。",
        "from": "T37n1763_035:0493b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從方等出般若波羅蜜者。",
        "from": "T37n1763_035:0493b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若言智慧。",
        "from": "T37n1763_035:0493b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從說維摩。",
        "from": "T37n1763_035:0493b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後明法花。",
        "from": "T37n1763_035:0493b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨一因一果。",
        "from": "T37n1763_035:0493b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧開明。",
        "from": "T37n1763_035:0493b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以譬般若。",
        "from": "T37n1763_035:0493b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻之熟蘇也。",
        "from": "T37n1763_035:0493b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既說法花經竟。",
        "from": "T37n1763_035:0493b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃教與明理具足。",
        "from": "T37n1763_035:0493b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶若醍醐也。",
        "from": "T37n1763_035:0493b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言世尊(至)恭敬供養尊重讚歎。",
        "from": "T37n1763_035:0493b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_035:0493b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_035:0493b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉是請法之主。",
        "from": "T37n1763_035:0493b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自說修行之相。",
        "from": "T37n1763_035:0493b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_035:0493b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來雖明聖行。",
        "from": "T37n1763_035:0493b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未盡其美。",
        "from": "T37n1763_035:0493b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此章廣明慕法情重。",
        "from": "T37n1763_035:0493b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨其身命。",
        "from": "T37n1763_035:0493b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以為難。",
        "from": "T37n1763_035:0493b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此捨心修習聖行往不備。",
        "from": "T37n1763_035:0493b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此苦行。",
        "from": "T37n1763_035:0493b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何往而退。",
        "from": "T37n1763_035:0493b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖行之難莫過於此。",
        "from": "T37n1763_035:0493b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以斯行。",
        "from": "T37n1763_035:0493c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結聖行之終矣。",
        "from": "T37n1763_035:0493c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛讚迦葉菩薩(至)諸行無常是生滅法。",
        "from": "T37n1763_035:0493c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_035:0493c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智宗曰。",
        "from": "T37n1763_035:0493c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先說無常也。",
        "from": "T37n1763_035:0493c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二理必對必應圓說。",
        "from": "T37n1763_035:0493c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故謂半如意珠也。",
        "from": "T37n1763_035:0493c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是半偈已便住其前(至)生滅滅已寂滅為樂。",
        "from": "T37n1763_035:0493c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_035:0493c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說常也。",
        "from": "T37n1763_035:0493c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂滅無苦。",
        "from": "T37n1763_035:0493c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無苦故。",
        "from": "T37n1763_035:0493c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之為樂。",
        "from": "T37n1763_035:0493c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無更別樂。",
        "from": "T37n1763_035:0493c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云寂滅。",
        "from": "T37n1763_035:0493c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時羅剎說是偈已(至)大般涅槃修於聖行。",
        "from": "T37n1763_035:0493c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_035:0493c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_035:0493c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上已讚其所行為難。",
        "from": "T37n1763_035:0493c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今引昔事。",
        "from": "T37n1763_035:0493c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以證護法之不虛。",
        "from": "T37n1763_035:0493c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求法之至也。",
        "from": "T37n1763_035:0493c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第三十五",
        "from": "T37n1763_035:0493c11_0",
        "context_with_next_sentence": false
    }
]