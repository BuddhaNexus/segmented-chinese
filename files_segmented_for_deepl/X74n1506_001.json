[
    {
        "source_sentence": "南山祖師禮讚文",
        "from": "X74n1506_001:1081b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台沙門釋　允堪　述",
        "from": "X74n1506_001:1081b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首南山教主西明律師。",
        "from": "X74n1506_001:1081b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智廓難量。",
        "from": "X74n1506_001:1081b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位高莫測。",
        "from": "X74n1506_001:1081b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外示聲聞奇相。",
        "from": "X74n1506_001:1081b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內冥菩薩圓修。",
        "from": "X74n1506_001:1081b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洋洋馳譽於五天。",
        "from": "X74n1506_001:1081b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藹藹流芳於千古。",
        "from": "X74n1506_001:1081b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "早自發揮祕藏。",
        "from": "X74n1506_001:1081b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰述彝章。",
        "from": "X74n1506_001:1081b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "英辭而間綴珠瓊光逾眾寶。",
        "from": "X74n1506_001:1081b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奧義而濬開川瀆量等沖溟。",
        "from": "X74n1506_001:1081b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決通四分雄詮。",
        "from": "X74n1506_001:1081b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親感諸天顯證。",
        "from": "X74n1506_001:1081b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋以清機化滿。",
        "from": "X74n1506_001:1081b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽遷壇谷室中。",
        "from": "X74n1506_001:1081b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玅利功圓。",
        "from": "X74n1506_001:1081b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂託率陀宮內。",
        "from": "X74n1506_001:1081b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我恨生當澆季。",
        "from": "X74n1506_001:1081b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不遇真慈濫傳三行。",
        "from": "X74n1506_001:1081b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微言寧賾五篇深旨。",
        "from": "X74n1506_001:1081b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "望座蓮而既遠。",
        "from": "X74n1506_001:1081b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難親師子之音。",
        "from": "X74n1506_001:1081b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思法乳以空頻。",
        "from": "X74n1506_001:1081b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但守嬰兒之困。",
        "from": "X74n1506_001:1081b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則應鍾俄屆。",
        "from": "X74n1506_001:1081b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諱日斯臨。",
        "from": "X74n1506_001:1081b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座列香華。",
        "from": "X74n1506_001:1081b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "槃盈蘋藻。",
        "from": "X74n1506_001:1081b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶同禴祭。",
        "from": "X74n1506_001:1081b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "式表爾思。",
        "from": "X74n1506_001:1081b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰追罔極之恩。",
        "from": "X74n1506_001:1081b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少薦非馨之禮。",
        "from": "X74n1506_001:1081b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠希慈眼。",
        "from": "X74n1506_001:1081b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯察虔心。",
        "from": "X74n1506_001:1081b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指而來降道場。",
        "from": "X74n1506_001:1081b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神功靡忒。",
        "from": "X74n1506_001:1081b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉足而不離寶所。",
        "from": "X74n1506_001:1081b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玅用　輙露精誠。",
        "from": "X74n1506_001:1081b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂昭鑒。",
        "from": "X74n1506_001:1081b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南山教主澄照大師。",
        "from": "X74n1506_001:1081b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願降臨道場。",
        "from": "X74n1506_001:1081b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受我供養。",
        "from": "X74n1506_001:1081b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皓月麗空則眾星隱耀。",
        "from": "X74n1506_001:1081b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖師出世則羣智絕言。",
        "from": "X74n1506_001:1081b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼揚象扇之風。",
        "from": "X74n1506_001:1081b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宏著虬文之訓。",
        "from": "X74n1506_001:1081b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇王拜首。",
        "from": "X74n1506_001:1081b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人翊靈。",
        "from": "X74n1506_001:1081b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實波離儔。",
        "from": "X74n1506_001:1081b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷如來任。",
        "from": "X74n1506_001:1081b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮隋文治世京華降誕時身南山尊者。",
        "from": "X74n1506_001:1081b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆倣此。",
        "from": "X74n1506_001:1081b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後和同前)",
        "from": "X74n1506_001:1081b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　神州一類機緣熟　　大士分身感赴來　月應澄瀾信不差　　谷酬清響曾無失　竺賢指出真僧迹　　姚氏忻懷聖者蹤　誕慶佳辰與佛同　　應知識作空王使一心頂禮日嚴精舍棄家入道時身。",
        "from": "X74n1506_001:1081c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　跡寄搢紳為令子　　操懷松栢異常童　弱齡搖筆著高文　　綠髮辭家厭浮世　內典閱窮千日內　　玅經誦徹兩旬中　仰茲勇銳早超羣　　豈獨當年推義少一心頂禮靈壇求戒預祈冥感時身。",
        "from": "X74n1506_001:1081c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　尸羅欲受彰靈感　　舍利先求降寶函　確爾將圓七晝期　　鏗然俄向遙空墜　金莖滴露清難比　　銀漢流星勢可同　吳地于今尚有緣　　塔婆夜夜祥光起一心頂禮京畿請業聽尋律藏時身。",
        "from": "X74n1506_001:1081c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛法于時嗟壅塞　　律筵無處可依承　艱辛得造首師門　　研考便通金口義　鈿軸曉開雲閣靜　　紗燈夜映竹堂深　毗尼殘缺自茲明　　猶歎未能心盡證一心頂禮紵麻蘭若操觚撰鈔時身。",
        "from": "X74n1506_001:1081c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　跡隱終南當絕頂　　雲深蘭若寂無人　會通羣部補今宗　　搜駮諸師成了義　三行旨清秋月皎　　十門辭爛曉霞明　反光九代信難如　　後世素師空擬議一心頂禮九旬精進行般舟三昧時身。",
        "from": "X74n1506_001:1081c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　般舟深定功推大　　菩薩真機力可修　萬境虗融泯外緣　　一心圓證妄餘念　香飄雲室迎秋令　　聲遞林風入夜清　三昧成時秖自知　　十方佛在空中立一心頂禮西明行道天神捧足時身。",
        "from": "X74n1506_001:1082a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寂寂花宮當夜午　　寥寥月殿尚經行　心緣真境頓忘勞　　足趺空堦寧有害　捷疾現身親捧接　　那吒受勅暗相隨　佛牙從此獻師來　　沒付文綱今在世一心頂禮龍天依奉講楞伽授戒時身。",
        "from": "X74n1506_001:1082a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　師居物表閑揮麈　　龍化人形來聽經　法語頻揚吼石音　　戒身密授浮囊意　南天毗勒供甘露　　西竺那提請象胥　如斯解行世稀逢　　幽顯咸思歸盛德一心頂禮京南澧福築壇應法時身。",
        "from": "X74n1506_001:1082a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　里稱遵善當靈壤　　鄉曰清官是淨墟　遂築靈壇向紺園　　仰模良制資先聖　明明珠釜連高頂　　粲粲星神布兩層　重受雲奔來四方　　功成因感賓頭禮一心頂禮功成示寂往生兜率時身。",
        "from": "X74n1506_001:1082a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　棘林香好從天獻　　覩史宮奇待聖來　補處爰親慈氏尊　　下生將紹波離任　煥爛幡幢搖彩日　　清泠歌唄響層宵　斂容端坐寂無聲　　荷法千徒流血淚至心懺悔我及十方法界一切眾生。",
        "from": "X74n1506_001:1082a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明風鼓心源。",
        "from": "X74n1506_001:1082b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄識波騰性海。",
        "from": "X74n1506_001:1082b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂成起滅。",
        "from": "X74n1506_001:1082b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃受漂淪。",
        "from": "X74n1506_001:1082b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四生流轉無窮。",
        "from": "X74n1506_001:1082b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾苦嬰纏莫盡。",
        "from": "X74n1506_001:1082b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聞正法。",
        "from": "X74n1506_001:1082b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何殊三億之徒。",
        "from": "X74n1506_001:1082b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或染邪風。",
        "from": "X74n1506_001:1082b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈異六師之黨。",
        "from": "X74n1506_001:1082b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永招幽暗。",
        "from": "X74n1506_001:1082b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長處愚蒙。",
        "from": "X74n1506_001:1082b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵境攀緣若癡猿之得樹。",
        "from": "X74n1506_001:1082b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慾情競騖猶逸象之無鈎。",
        "from": "X74n1506_001:1082b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱遇良師。",
        "from": "X74n1506_001:1082b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詎懷深信。",
        "from": "X74n1506_001:1082b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致使衣珠空繫都忘知覺之心。",
        "from": "X74n1506_001:1082b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宅寶徒盈寧濟困窮之厄。",
        "from": "X74n1506_001:1082b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣今日。",
        "from": "X74n1506_001:1082b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶得出家。",
        "from": "X74n1506_001:1082b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "披水田衣。",
        "from": "X74n1506_001:1082b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納塵沙戒。",
        "from": "X74n1506_001:1082b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "值能仁遺訓。",
        "from": "X74n1506_001:1082b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇終南寶章。",
        "from": "X74n1506_001:1082b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不思義路全迷。",
        "from": "X74n1506_001:1082b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未通幽邃疑冰。",
        "from": "X74n1506_001:1082b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正結罔構淵深。",
        "from": "X74n1506_001:1082b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反繄測海之知。",
        "from": "X74n1506_001:1082b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄恃挈瓶之智。",
        "from": "X74n1506_001:1082b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕陵先覺。",
        "from": "X74n1506_001:1082b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "排斥真乘。",
        "from": "X74n1506_001:1082b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將實教為憑虗。",
        "from": "X74n1506_001:1082b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以權宗為戲論。",
        "from": "X74n1506_001:1082b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慢幢高竪。",
        "from": "X74n1506_001:1082b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛網宏張。",
        "from": "X74n1506_001:1082b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居屏為非。",
        "from": "X74n1506_001:1082b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肯畏幽靈而掃跡。",
        "from": "X74n1506_001:1082b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逢人斂相。",
        "from": "X74n1506_001:1082b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟求邪利以資身。",
        "from": "X74n1506_001:1082b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不義常行。",
        "from": "X74n1506_001:1082b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無慚永坐。",
        "from": "X74n1506_001:1082b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諒作福田荊棘。",
        "from": "X74n1506_001:1082b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信為佛日煙雲。",
        "from": "X74n1506_001:1082b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三乘觀慧闕修。",
        "from": "X74n1506_001:1082b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十聚罪愆深隱。",
        "from": "X74n1506_001:1082b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯釁戾量等虗空。",
        "from": "X74n1506_001:1082b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對萬德以披陳。",
        "from": "X74n1506_001:1082b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向四依而發露。",
        "from": "X74n1506_001:1082b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓除後犯。",
        "from": "X74n1506_001:1082b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永絕前非。",
        "from": "X74n1506_001:1082b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普承智慧之光。",
        "from": "X74n1506_001:1082b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓釋雪霜之非。",
        "from": "X74n1506_001:1082b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔已。",
        "from": "X74n1506_001:1082b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命頂禮。",
        "from": "X74n1506_001:1082b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆倣此)。",
        "from": "X74n1506_001:1082b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心勸請",
        "from": "X74n1506_001:1082b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能仁制略為初訓　　身子虔誠乞廣談　我今徧請聖賢師　　先向剎塵揚律藏至心隨喜　初發道心諸佛子　　終登玅果大慈尊　所有熏修出世緣　　我今一一皆隨喜至心迴向　戒定慧中曾習行　　聞思修內或生因　迴向真如法界中　　普滋羣有霑常樂至心發願　鵝珠誓共行慈利　　草繫期同護戒根　遮性無邊誓等持　　常遊佛道開禪智右真悟律師第一章云丹徒降誕者。",
        "from": "X74n1506_001:1082b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按行狀云。",
        "from": "X74n1506_001:1082c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師在京華生長。",
        "from": "X74n1506_001:1082c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即京兆府。",
        "from": "X74n1506_001:1082c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而云長城丹徒。",
        "from": "X74n1506_001:1082c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢指祖宗所出。",
        "from": "X74n1506_001:1082c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非生處也。",
        "from": "X74n1506_001:1082c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八章按禮記辨四方語。",
        "from": "X74n1506_001:1082c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有其職。",
        "from": "X74n1506_001:1082c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方曰寄。",
        "from": "X74n1506_001:1082c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方曰象。",
        "from": "X74n1506_001:1082c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方曰狄鞮(音蹄)。",
        "from": "X74n1506_001:1082c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方曰譯。",
        "from": "X74n1506_001:1082c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周禮謂象胥乃通四方之言。",
        "from": "X74n1506_001:1082c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胥字上聲呼之。",
        "from": "X74n1506_001:1082c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今作平聲。",
        "from": "X74n1506_001:1082c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誤矣。",
        "from": "X74n1506_001:1082c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作上聲則音律不便。",
        "from": "X74n1506_001:1082c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今對西竺。",
        "from": "X74n1506_001:1082c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜云狄鞮。",
        "from": "X74n1506_001:1082c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且仍舊貫。",
        "from": "X74n1506_001:1082c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者不可不知。",
        "from": "X74n1506_001:1082c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南山祖師禮讚文(畢)",
        "from": "X74n1506_001:1082c16_0",
        "context_with_next_sentence": false
    }
]