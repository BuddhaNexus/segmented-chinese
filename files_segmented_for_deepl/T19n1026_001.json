[
    {
        "source_sentence": "佛說造塔延命功德經",
        "from": "T19n1026_001:0726a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罽賓國三藏沙門般若奉　詔譯",
        "from": "T19n1026_001:0726a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T19n1026_001:0726a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T19n1026_001:0726a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾及菩薩摩訶薩眾俱。",
        "from": "T19n1026_001:0726a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時波斯匿王在大眾中。",
        "from": "T19n1026_001:0726a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起整理衣服。",
        "from": "T19n1026_001:0726a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T19n1026_001:0726a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛雙足合掌恭敬。",
        "from": "T19n1026_001:0726a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言。",
        "from": "T19n1026_001:0726a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希有世尊。",
        "from": "T19n1026_001:0726a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相師占我。",
        "from": "T19n1026_001:0726a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却後七日。",
        "from": "T19n1026_001:0726a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必當壽盡。",
        "from": "T19n1026_001:0726a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為無常苦所逼惱。",
        "from": "T19n1026_001:0726a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所依仰來投世尊。",
        "from": "T19n1026_001:0726a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊為我救護。",
        "from": "T19n1026_001:0726a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何令我得離憂苦。",
        "from": "T19n1026_001:0726a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告言。",
        "from": "T19n1026_001:0726a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王善自安慰勿得憂怖。",
        "from": "T19n1026_001:0726a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來有善方便。",
        "from": "T19n1026_001:0726a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令大王獲殊勝利近延壽命。",
        "from": "T19n1026_001:0726a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得阿耨多羅三藐三菩提。",
        "from": "T19n1026_001:0726a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽諦聽善思念之。",
        "from": "T19n1026_001:0726a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當為汝分別解說。",
        "from": "T19n1026_001:0726a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王當知。",
        "from": "T19n1026_001:0726a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲免離無常苦惱超入如來法身壽量。",
        "from": "T19n1026_001:0726a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應先發心持佛淨戒修最上福。",
        "from": "T19n1026_001:0726a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能發此心延王壽命。",
        "from": "T19n1026_001:0726a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王白佛言。",
        "from": "T19n1026_001:0726a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊為我救護。",
        "from": "T19n1026_001:0726a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說發心持佛淨戒修最上福。",
        "from": "T19n1026_001:0726a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我便奉行亦令國人奉行此法。",
        "from": "T19n1026_001:0726a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未知發心何等心。",
        "from": "T19n1026_001:0726a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持何等戒何福最上。",
        "from": "T19n1026_001:0726a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來為我宣說。",
        "from": "T19n1026_001:0726a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告大王言。",
        "from": "T19n1026_001:0726a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心者發四無量心。",
        "from": "T19n1026_001:0726a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言持戒者持不殺戒。",
        "from": "T19n1026_001:0726a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修上福者無過造塔。",
        "from": "T19n1026_001:0726a27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲愍救護一切眾生。",
        "from": "T19n1026_001:0726a27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天善神常來守護。",
        "from": "T19n1026_001:0726a28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相捨離如影隨形。",
        "from": "T19n1026_001:0726a28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發生大王無邊福利。",
        "from": "T19n1026_001:0726a29_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王建立佛塔福利難思。",
        "from": "T19n1026_001:0726a29_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世如來所共稱讚。",
        "from": "T19n1026_001:0726b01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為大王略說因緣。",
        "from": "T19n1026_001:0726b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王當諦聽。",
        "from": "T19n1026_001:0726b02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃往古昔有一小兒此地牧牛。",
        "from": "T19n1026_001:0726b02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸相師來共占相謂言。",
        "from": "T19n1026_001:0726b03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此牧牛兒却後七日必當壽盡。",
        "from": "T19n1026_001:0726b03_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是牧牛兒又於異時。",
        "from": "T19n1026_001:0726b04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸小兒聚沙為戲。",
        "from": "T19n1026_001:0726b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有小兒摧沙為堆。",
        "from": "T19n1026_001:0726b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言作佛塔高一磔手。",
        "from": "T19n1026_001:0726b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或二或三至四磔手。",
        "from": "T19n1026_001:0726b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時此小兒戲聚沙塔高一磔手。",
        "from": "T19n1026_001:0726b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却後更延七年壽命。",
        "from": "T19n1026_001:0726b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於聚沙時。",
        "from": "T19n1026_001:0726b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有辟支佛持鉢而行。",
        "from": "T19n1026_001:0726b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸小兒以嬉戲心。",
        "from": "T19n1026_001:0726b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將沙奉施言我施麨。",
        "from": "T19n1026_001:0726b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時辟支佛引鉢受之。",
        "from": "T19n1026_001:0726b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力沙變成麨。",
        "from": "T19n1026_001:0726b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸小兒見此因緣。",
        "from": "T19n1026_001:0726b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉獲得清淨信心。",
        "from": "T19n1026_001:0726b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時辟支佛與諸小兒悉授記莂作如是言。",
        "from": "T19n1026_001:0726b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諸童子所造之塔高一磔手者。",
        "from": "T19n1026_001:0726b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世作鐵輪王。",
        "from": "T19n1026_001:0726b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王一天下。",
        "from": "T19n1026_001:0726b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二磔手者作銅輪王。",
        "from": "T19n1026_001:0726b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王二天下。",
        "from": "T19n1026_001:0726b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三磔手者作銀輪王。",
        "from": "T19n1026_001:0726b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王三天下。",
        "from": "T19n1026_001:0726b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四磔手者作金輪王。",
        "from": "T19n1026_001:0726b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王四天下。",
        "from": "T19n1026_001:0726b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸小兒以嬉戲心造如是塔感如是果。",
        "from": "T19n1026_001:0726b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況大王發至誠心。",
        "from": "T19n1026_001:0726b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T19n1026_001:0726b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以決定心如法造塔。",
        "from": "T19n1026_001:0726b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一肘量一磔手一指節一穬麥。",
        "from": "T19n1026_001:0726b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得功德無有限量。",
        "from": "T19n1026_001:0726b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常有諸天雨花供養。",
        "from": "T19n1026_001:0726b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故大王。",
        "from": "T19n1026_001:0726b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人欲造塔時。",
        "from": "T19n1026_001:0726b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於一切眾生起大悲心而為先導。",
        "from": "T19n1026_001:0726b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以菩提心而為根本。",
        "from": "T19n1026_001:0726b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後淨地作壇供養。",
        "from": "T19n1026_001:0726b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷塗之燒香散花。",
        "from": "T19n1026_001:0726b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面正東坐作是思惟。",
        "from": "T19n1026_001:0726b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛薄伽梵自利利他功德圓滿。",
        "from": "T19n1026_001:0726b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能滿足眾生之願。",
        "from": "T19n1026_001:0726b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今成就第一法身發菩提心。",
        "from": "T19n1026_001:0726b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於薄伽梵所有造塔軌儀法則。",
        "from": "T19n1026_001:0726b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一次第如法奉行。",
        "from": "T19n1026_001:0726b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一採集妙華。",
        "from": "T19n1026_001:0726b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼加持七遍。",
        "from": "T19n1026_001:0726b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散布壇上供養如來。",
        "from": "T19n1026_001:0726b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0726b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩　謨　薩　怛他(二合)　耶　埵　阿　耨　羯　多　跛羅　底　瑟恥(二合)　帝　布　數波　罽　答迷　怛他　蘖　多　耶　三　藐　三　母　馱　耶　怛　儞也(二合)他　補　澁閉　補　澁閉(二合)　蘇　補　澁閉(二合)娑縛(二合)　賀(引)第二埏埴作泥團時。",
        "from": "T19n1026_001:0726c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作婀字觀。",
        "from": "T19n1026_001:0726c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是如來法界身。",
        "from": "T19n1026_001:0726c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當歸命作如是言。",
        "from": "T19n1026_001:0726c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩　謨　捺　闍　溺　崛芻(二合)　悉底(二合)　耶　捺嚩(平)　薩　嚩　怛　他　蘖　多　難　滿　泥(上)　囉　怛曩(二合)　怛羅(二合)　演　輸　梵　阿　閦　鞞　阿　彌陀　畔　差(子阿反)　薄　伽　梵　阿　哩也(引)　嚩　嚕枳　帝　濕嚩(二合)　羅　耶　麌　嚕正埏埴時。",
        "from": "T19n1026_001:0726c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以俱胝陀羅尼。",
        "from": "T19n1026_001:0726c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持其泥二十一遍。",
        "from": "T19n1026_001:0726c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造一佛塔如造一俱胝佛塔。",
        "from": "T19n1026_001:0726c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲功德等無有異。",
        "from": "T19n1026_001:0726c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此陀羅尼名為俱胝陀羅尼。",
        "from": "T19n1026_001:0726c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0726c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛　儞也(二合)　他　唵　蘇(上)佉澁茗(四合)　蘇佉澁茗(四合)蘇佉澁麼(四合)　阿　耨　羯　諦　訕　諦　訕諦　誕　諦　誕　諦　儞(平)　囉　拘　黎　曳(八)　戍嚩　提(九)　諦　主　嚩　提(十)　薩　嚩　母　馱(十一)　阿地　瑟姹(二合)　曩　阿　地　瑟恥(二合)　多　阿　母底　羝(十四)　娑嚩(二合引)　賀(引)第三次於泥團作娑頗(二合)字觀。",
        "from": "T19n1026_001:0726c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀此泥團猶如水精。",
        "from": "T19n1026_001:0727a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如頗胝迦寶。",
        "from": "T19n1026_001:0727a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外清淨分明瑩徹。",
        "from": "T19n1026_001:0727a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼加持一遍。",
        "from": "T19n1026_001:0727a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日羅(二合)　嗢　多　皤　嚩　耶　娑嚩(二合引)賀(引)第四次塗赤土時。",
        "from": "T19n1026_001:0727a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作火色觀。",
        "from": "T19n1026_001:0727a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知一切世間出世間法。",
        "from": "T19n1026_001:0727a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從微塵而得成就。",
        "from": "T19n1026_001:0727a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此觀已。",
        "from": "T19n1026_001:0727a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取乾赤土遍塗泥團。",
        "from": "T19n1026_001:0727a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀一切法本來無生畢竟空寂。",
        "from": "T19n1026_001:0727a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作含字觀。",
        "from": "T19n1026_001:0727a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想此泥團如鎔金色。",
        "from": "T19n1026_001:0727a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後造塔。",
        "from": "T19n1026_001:0727a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼加持一遍。",
        "from": "T19n1026_001:0727a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　阿　羅　左　尾　羅　左　娑嚩(二合引)　賀第五次以泥團入模時。",
        "from": "T19n1026_001:0727a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用陀羅尼加持一遍。",
        "from": "T19n1026_001:0727a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後入模。",
        "from": "T19n1026_001:0727a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日羅(二合引)　馱　都　蘖　陛　娑嚩(二合引)　賀(引)第六次入法身真言時。",
        "from": "T19n1026_001:0727a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用此陀羅尼加持一遍。",
        "from": "T19n1026_001:0727a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後入印子中。",
        "from": "T19n1026_001:0727a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　達　摩　馱　都　蘖　陛　娑嚩　賀(引)第七次椎打塔印時。",
        "from": "T19n1026_001:0727b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用陀羅尼加持一遍。",
        "from": "T19n1026_001:0727b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後椎打。",
        "from": "T19n1026_001:0727b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日囉(二合引)　補　特　伽　羅　拘　吒　耶　拘吒耶娑嚩(二合引)　賀第八次椎打竟。",
        "from": "T19n1026_001:0727b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手作塔階時。",
        "from": "T19n1026_001:0727b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用陀羅尼加持一遍。",
        "from": "T19n1026_001:0727b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置塔階。",
        "from": "T19n1026_001:0727b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日羅(二合引)　喻　曬　娑嚩(二合引)　賀第九次塔正從模中出時。",
        "from": "T19n1026_001:0727b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用陀羅尼加持一遍。",
        "from": "T19n1026_001:0727b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後出之。",
        "from": "T19n1026_001:0727b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　達　摩　底　珠　娑嚩(二合引)　賀第十次脫塔出模已安置塔時。",
        "from": "T19n1026_001:0727b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用陀羅尼加持一遍。",
        "from": "T19n1026_001:0727b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　蘇　鉢羅(二合引)　底　瑟恥(二合)　多　嚩　日(入)羅(二合)娑嚩(二合)　賀(引)第十一次安置塔座了。",
        "from": "T19n1026_001:0727b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手按塔頂上。",
        "from": "T19n1026_001:0727b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼加持一遍。",
        "from": "T19n1026_001:0727b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　跛羅藍(三合)　摩　哆　喃　曳(平)　娑嚩(二合引)　賀(引)第十二次於塔上安傘蓋時。",
        "from": "T19n1026_001:0727b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼加持一遍。",
        "from": "T19n1026_001:0727b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1026_001:0727b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　跛羅藍(三合)　摩　婀　喻　曬　娑嚩(二合)　賀佛告大王。",
        "from": "T19n1026_001:0727c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T19n1026_001:0727c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨心依此軌儀造作佛塔。",
        "from": "T19n1026_001:0727c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自作若教人作。",
        "from": "T19n1026_001:0727c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復讚歎若當信受。",
        "from": "T19n1026_001:0727c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得功德與造佛塔等無差別。",
        "from": "T19n1026_001:0727c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人於此一生。",
        "from": "T19n1026_001:0727c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為一切毒藥所中。",
        "from": "T19n1026_001:0727c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命長遠無有橫死。",
        "from": "T19n1026_001:0727c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟當得不壞之身。",
        "from": "T19n1026_001:0727c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切鬼神不敢逼近。",
        "from": "T19n1026_001:0727c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五星七曜隨順驅使。",
        "from": "T19n1026_001:0727c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切怨家悉皆退散。",
        "from": "T19n1026_001:0727c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所生處身常無病。",
        "from": "T19n1026_001:0727c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生見皆歡喜。",
        "from": "T19n1026_001:0727c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無淨戒者淨戒滿足。",
        "from": "T19n1026_001:0727c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不調伏者能令調伏。",
        "from": "T19n1026_001:0727c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不清淨者能令清淨。",
        "from": "T19n1026_001:0727c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破齋戒者齋戒復生。",
        "from": "T19n1026_001:0727c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若犯四重及五無間極重罪業悉得消滅。",
        "from": "T19n1026_001:0727c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始劫來障累皆盡。",
        "from": "T19n1026_001:0727c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有女人欲求男者。",
        "from": "T19n1026_001:0727c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生勇健福德之男。",
        "from": "T19n1026_001:0727c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王常隨擁護。",
        "from": "T19n1026_001:0727c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造塔功德其福如是。",
        "from": "T19n1026_001:0727c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若塔破壞變作微塵。",
        "from": "T19n1026_001:0727c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風吹一塵散落他處。",
        "from": "T19n1026_001:0727c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵所經過山林河海。",
        "from": "T19n1026_001:0727c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生觸斯塵者。",
        "from": "T19n1026_001:0727c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永更不受雜類之身。",
        "from": "T19n1026_001:0727c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身受生常得見佛。",
        "from": "T19n1026_001:0727c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王若善男子善女人。",
        "from": "T19n1026_001:0727c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於造塔及陀羅尼。",
        "from": "T19n1026_001:0727c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想觀分明一心憶念。",
        "from": "T19n1026_001:0727c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離水難火難王難賊難。",
        "from": "T19n1026_001:0727c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀兵等難無能傷害。",
        "from": "T19n1026_001:0727c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於曠野若空閑處。",
        "from": "T19n1026_001:0727c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於聚落及大會中。",
        "from": "T19n1026_001:0727c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以此經宣告大眾。",
        "from": "T19n1026_001:0727c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為救護眾生身命。",
        "from": "T19n1026_001:0727c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲福德量與空等。",
        "from": "T19n1026_001:0727c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於後世書寫流通。",
        "from": "T19n1026_001:0727c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔雖未造造塔功德等無有異。",
        "from": "T19n1026_001:0727c23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為大王及未來世一切眾生。",
        "from": "T19n1026_001:0727c24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣開造塔延命功德。",
        "from": "T19n1026_001:0727c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王當憶持。",
        "from": "T19n1026_001:0727c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時波斯匿王及諸大眾。",
        "from": "T19n1026_001:0727c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T19n1026_001:0727c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說造塔延命功德經",
        "from": "T19n1026_001:0727c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　中天竺三藏牟尼室利　　　說梵語　　西明寺大德賜紫沙門圓照　筆　授　　章教寺大德沙門鑑虛　　　潤文靈雲校本云　貞享四丁卯稔中春二十三日一校了　　　　　　淨嚴(四十九載)",
        "from": "T19n1026_001:0727c29_0",
        "context_with_next_sentence": false
    }
]