[
    {
        "source_sentence": "觀心食法",
        "from": "X55n0911_001:0687a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台　智者大師",
        "from": "X55n0911_001:0687a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既敷座已。",
        "from": "X55n0911_001:0687a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽維那進止。",
        "from": "X55n0911_001:0687a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳴鐘後斂手供養一體三寶。",
        "from": "X55n0911_001:0687a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧十方界施作佛事。",
        "from": "X55n0911_001:0687a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次出生飯稱施六道。",
        "from": "X55n0911_001:0687a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即表六波羅密。",
        "from": "X55n0911_001:0687a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後受此食。",
        "from": "X55n0911_001:0687a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫食者。",
        "from": "X55n0911_001:0687a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生之外命。",
        "from": "X55n0911_001:0687a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不入觀即潤生死。",
        "from": "X55n0911_001:0687a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能知入觀。",
        "from": "X55n0911_001:0687a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別生死有邊無邊。",
        "from": "X55n0911_001:0687a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不問分衛與清眾淨食皆須作觀觀之者。",
        "from": "X55n0911_001:0687a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自恐此身內舊食皆是無明煩惱潤益生死。",
        "from": "X55n0911_001:0687a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今之所食皆是般若。",
        "from": "X55n0911_001:0687a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想於舊食從毛孔次第而出。",
        "from": "X55n0911_001:0687a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食既出已心路即開。",
        "from": "X55n0911_001:0687a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食今新食。",
        "from": "X55n0911_001:0687a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照諸暗滅成於般若。",
        "from": "X55n0911_001:0687a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故淨名云。",
        "from": "X55n0911_001:0687a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於食等者於法亦等。",
        "from": "X55n0911_001:0687a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為明證。",
        "from": "X55n0911_001:0687a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此食故成般若食。",
        "from": "X55n0911_001:0687a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能養法身。",
        "from": "X55n0911_001:0687a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身得立即得解脫。",
        "from": "X55n0911_001:0687a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為三德照此食者。",
        "from": "X55n0911_001:0687a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非新非故。",
        "from": "X55n0911_001:0687a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有舊食之故。",
        "from": "X55n0911_001:0687a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有新食之新。",
        "from": "X55n0911_001:0687a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名為假。",
        "from": "X55n0911_001:0687a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求故不得。",
        "from": "X55n0911_001:0687a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求新不得。",
        "from": "X55n0911_001:0687a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟空寂。",
        "from": "X55n0911_001:0687a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之為空觀。",
        "from": "X55n0911_001:0687a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食者自那可食為新。",
        "from": "X55n0911_001:0687a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既無新食那可得食。",
        "from": "X55n0911_001:0687a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食者而不離舊食養身而新食重益。",
        "from": "X55n0911_001:0687a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣和合。",
        "from": "X55n0911_001:0687a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可前後分別。",
        "from": "X55n0911_001:0687a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之為中。",
        "from": "X55n0911_001:0687a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只中即假空。",
        "from": "X55n0911_001:0687a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只空即中假。",
        "from": "X55n0911_001:0687a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只假即空中。",
        "from": "X55n0911_001:0687a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可思議。",
        "from": "X55n0911_001:0687a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為中道。",
        "from": "X55n0911_001:0687a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又淨名云。",
        "from": "X55n0911_001:0687a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有煩惱。",
        "from": "X55n0911_001:0687a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非離煩惱。",
        "from": "X55n0911_001:0687a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非入定意。",
        "from": "X55n0911_001:0687a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非起定意。",
        "from": "X55n0911_001:0687a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名食法也。",
        "from": "X55n0911_001:0687a21_4",
        "context_with_next_sentence": false
    }
]