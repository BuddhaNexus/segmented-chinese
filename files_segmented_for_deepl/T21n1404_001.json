[
    {
        "source_sentence": "佛說如意寶總持王經",
        "from": "T21n1404_001:0920c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1404_001:0920c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1404_001:0920c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1404_001:0920c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在覩史多天宮中。",
        "from": "T21n1404_001:0920c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與妙住等無數千菩薩摩訶薩俱。",
        "from": "T21n1404_001:0920c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸菩薩摩訶薩。",
        "from": "T21n1404_001:0920c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得具足諸法轉不退輪。",
        "from": "T21n1404_001:0920c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一生當得無上正等正覺。",
        "from": "T21n1404_001:0920c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有無量天眾并諸營從亦來集會。",
        "from": "T21n1404_001:0920c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊在大眾中處大寶座顧視眾會欲說妙法。",
        "from": "T21n1404_001:0920c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時妙住菩薩摩訶薩。",
        "from": "T21n1404_001:0920c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起詣世尊前。",
        "from": "T21n1404_001:0920c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五輪著地禮已白言。",
        "from": "T21n1404_001:0920c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊有彼善男子。",
        "from": "T21n1404_001:0920c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此如意寶總持章句一心受持於過去見在未來世尊。",
        "from": "T21n1404_001:0920c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見不聞亦不值遇者。",
        "from": "T21n1404_001:0920c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是事云何當有何因。",
        "from": "T21n1404_001:0920c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來普為我等一一開說。",
        "from": "T21n1404_001:0920c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至未來一切眾生使無疑惑。",
        "from": "T21n1404_001:0920c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語已顒然而住。",
        "from": "T21n1404_001:0920c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告妙住菩薩言。",
        "from": "T21n1404_001:0920c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝大方便能問斯事。",
        "from": "T21n1404_001:0920c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當諦聽為汝宣說。",
        "from": "T21n1404_001:0921a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言妙住彼善男子。",
        "from": "T21n1404_001:0921a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此如意寶總持章句者。",
        "from": "T21n1404_001:0921a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於過去見在及彼未來。",
        "from": "T21n1404_001:0921a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖行利益常住福業。",
        "from": "T21n1404_001:0921a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復於此總持章句疑未斷故。",
        "from": "T21n1404_001:0921a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住此雖受持而非受持。",
        "from": "T21n1404_001:0921a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何此人住有為心。",
        "from": "T21n1404_001:0921a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無善巧智無方便故。",
        "from": "T21n1404_001:0921a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼善男子於此總持章句。",
        "from": "T21n1404_001:0921a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無疑惑決定專注。",
        "from": "T21n1404_001:0921a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名為真受持者。",
        "from": "T21n1404_001:0921a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名為知過去未來及以見在說法師名。",
        "from": "T21n1404_001:0921a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名為見過去未來及以見在說法師相。",
        "from": "T21n1404_001:0921a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復得見過去未來及以見在正遍知者。",
        "from": "T21n1404_001:0921a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故妙住是人於總持門而妙解故。",
        "from": "T21n1404_001:0921a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復於信不信而不住故。",
        "from": "T21n1404_001:0921a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復了知無去無來。",
        "from": "T21n1404_001:0921a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生不滅。",
        "from": "T21n1404_001:0921a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非空非不空。",
        "from": "T21n1404_001:0921a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無瑞相非無瑞相。",
        "from": "T21n1404_001:0921a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無願求非無願求。",
        "from": "T21n1404_001:0921a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復於如是法無取著故。",
        "from": "T21n1404_001:0921a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住彼善男子。",
        "from": "T21n1404_001:0921a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能如是積行住無所住。",
        "from": "T21n1404_001:0921a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名住是得涅盤。",
        "from": "T21n1404_001:0921a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名受持供養此如意寶總持章句。",
        "from": "T21n1404_001:0921a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名得無趣無壞之義。",
        "from": "T21n1404_001:0921a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名得無疑力。",
        "from": "T21n1404_001:0921a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名得尸羅清淨。",
        "from": "T21n1404_001:0921a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名得一切法平等究竟成佛見所說法。",
        "from": "T21n1404_001:0921a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無自無他非和合非不和合。",
        "from": "T21n1404_001:0921a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住彼善男子。",
        "from": "T21n1404_001:0921a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若恒修是行即得自無染。",
        "from": "T21n1404_001:0921a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得無染亦得無縛。",
        "from": "T21n1404_001:0921a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自無縛令他無縛。",
        "from": "T21n1404_001:0921a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自他無縛亦不住解脫。",
        "from": "T21n1404_001:0921a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住若彼不染不縛不住解脫。",
        "from": "T21n1404_001:0921a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名為得如意寶總持。",
        "from": "T21n1404_001:0921a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於如來族名知過去佛最上之明。",
        "from": "T21n1404_001:0921a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名知未來佛最上之明。",
        "from": "T21n1404_001:0921a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名知見在佛最上之明。",
        "from": "T21n1404_001:0921a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住此如意寶總持章句。",
        "from": "T21n1404_001:0921a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去未來見在佛母。",
        "from": "T21n1404_001:0921a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何因緣故為住過去未來見在得利益故。",
        "from": "T21n1404_001:0921a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住若菩薩摩訶薩。",
        "from": "T21n1404_001:0921a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此如意寶總持章句者。",
        "from": "T21n1404_001:0921a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知得名供養稱讚無數諸佛。",
        "from": "T21n1404_001:0921a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復得名於無數佛聞無上法。",
        "from": "T21n1404_001:0921a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復得無數佛稱讚護念。",
        "from": "T21n1404_001:0921b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得佛無量福智生故。",
        "from": "T21n1404_001:0921b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住若受持此如意寶總持章句者。",
        "from": "T21n1404_001:0921b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡有所求無不獲得。",
        "from": "T21n1404_001:0921b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求聰明得聰明。",
        "from": "T21n1404_001:0921b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求總持得總持。",
        "from": "T21n1404_001:0921b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求七寶得七寶。",
        "from": "T21n1404_001:0921b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住若善男子於如是事有人求者。",
        "from": "T21n1404_001:0921b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須於半月中。",
        "from": "T21n1404_001:0921b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨志心以乳為食。",
        "from": "T21n1404_001:0921b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我佛族作大供養。",
        "from": "T21n1404_001:0921b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然持誦此如意寶總持章句。",
        "from": "T21n1404_001:0921b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心專注而無間斷。",
        "from": "T21n1404_001:0921b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所求事無不獲得。",
        "from": "T21n1404_001:0921b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住若有受持如是總持章句者。",
        "from": "T21n1404_001:0921b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此總持章句威德之力。",
        "from": "T21n1404_001:0921b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使有恒河沙數世界之中。",
        "from": "T21n1404_001:0921b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有天龍阿修羅迦樓羅緊曩羅摩睺羅伽鳩槃茶乃至人非人等。",
        "from": "T21n1404_001:0921b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之眾有極惡之心無能惱亂。",
        "from": "T21n1404_001:0921b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至星宿及尾也(二合)拏等亦不能惱害。",
        "from": "T21n1404_001:0921b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故以法力所加護故。",
        "from": "T21n1404_001:0921b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有賢愛菩薩大金剛手菩薩等而擁護故。",
        "from": "T21n1404_001:0921b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此菩薩於此知足天。",
        "from": "T21n1404_001:0921b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至色究竟天而常擁護。",
        "from": "T21n1404_001:0921b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況於人間持誦之者。",
        "from": "T21n1404_001:0921b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住非唯此菩薩等。",
        "from": "T21n1404_001:0921b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛之心亦恒護念。",
        "from": "T21n1404_001:0921b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故為受持此如意寶總持章句故。",
        "from": "T21n1404_001:0921b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是法已。",
        "from": "T21n1404_001:0921b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙住菩薩及會中無數千菩薩。",
        "from": "T21n1404_001:0921b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天眾并諸營從等。",
        "from": "T21n1404_001:0921b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞法已歡喜踊躍禮佛而退。",
        "from": "T21n1404_001:0921b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說如意寶總持王經",
        "from": "T21n1404_001:0921b22_0",
        "context_with_next_sentence": false
    }
]