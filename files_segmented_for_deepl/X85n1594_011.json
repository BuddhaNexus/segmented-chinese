[
    {
        "source_sentence": "佛祖綱目卷第十一(盈字號)",
        "from": "X85n1594_011:0575c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(周敬王四十三年起)丙寅(元王元年)癸酉(貞定王元年)辛丑(考王元年)丙辰(威烈王元年)癸亥(周威烈王八年止)(己亥)十祖脇尊者傳法富那夜奢脇尊者。",
        "from": "X85n1594_011:0575c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中印度人。",
        "from": "X85n1594_011:0575c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本名難生。",
        "from": "X85n1594_011:0575c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處胎六十年。",
        "from": "X85n1594_011:0575c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將誕之夕。",
        "from": "X85n1594_011:0575c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母夢白象載一寶座。",
        "from": "X85n1594_011:0575c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座置一明珠。",
        "from": "X85n1594_011:0575c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從門而入。",
        "from": "X85n1594_011:0575c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既覺遂生。",
        "from": "X85n1594_011:0575c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生而祥光燭室。",
        "from": "X85n1594_011:0575c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體有奇香。",
        "from": "X85n1594_011:0575c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及長雖穀食。",
        "from": "X85n1594_011:0575c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕無穢滓。",
        "from": "X85n1594_011:0575c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後值伏馱蜜多。",
        "from": "X85n1594_011:0575c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執侍左右。",
        "from": "X85n1594_011:0575c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞睡眠。",
        "from": "X85n1594_011:0575c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂其脇不至席。",
        "from": "X85n1594_011:0575c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂號脇尊者。",
        "from": "X85n1594_011:0575c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初至華氏國。",
        "from": "X85n1594_011:0575c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憩一樹下。",
        "from": "X85n1594_011:0575c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手指地。",
        "from": "X85n1594_011:0575c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而告眾曰。",
        "from": "X85n1594_011:0575c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此地變金色。",
        "from": "X85n1594_011:0575c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當有聖人入會。",
        "from": "X85n1594_011:0575c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖。",
        "from": "X85n1594_011:0575c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即變金色。",
        "from": "X85n1594_011:0575c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有長者子富那夜奢。",
        "from": "X85n1594_011:0575c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌前立脇。",
        "from": "X85n1594_011:0575c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X85n1594_011:0575c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝從何來。",
        "from": "X85n1594_011:0575c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X85n1594_011:0575c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我心非往。",
        "from": "X85n1594_011:0575c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脇曰。",
        "from": "X85n1594_011:0575c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何處住。",
        "from": "X85n1594_011:0575c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X85n1594_011:0575c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我心非止。",
        "from": "X85n1594_011:0575c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脇曰。",
        "from": "X85n1594_011:0575c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝不定耶。",
        "from": "X85n1594_011:0575c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X85n1594_011:0575c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛亦然。",
        "from": "X85n1594_011:0575c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脇曰。",
        "from": "X85n1594_011:0575c20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝非諸佛。",
        "from": "X85n1594_011:0575c20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X85n1594_011:0575c20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛亦非脇。",
        "from": "X85n1594_011:0575c20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因說偈曰。",
        "from": "X85n1594_011:0575c21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此地變金色。",
        "from": "X85n1594_011:0575c21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預知有聖至。",
        "from": "X85n1594_011:0575c21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當坐菩提樹。",
        "from": "X85n1594_011:0575c21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺華而成已。",
        "from": "X85n1594_011:0575c22_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜奢復說偈曰。",
        "from": "X85n1594_011:0575c22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師坐金色地。",
        "from": "X85n1594_011:0575c22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常說真實義。",
        "from": "X85n1594_011:0575c22_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回光而照我。",
        "from": "X85n1594_011:0575c23_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今入三摩諦。",
        "from": "X85n1594_011:0575c23_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脇知其意。",
        "from": "X85n1594_011:0575c23_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即度出家。",
        "from": "X85n1594_011:0575c23_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復具戒品。",
        "from": "X85n1594_011:0575c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃告之曰。",
        "from": "X85n1594_011:0575c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大法眼藏。",
        "from": "X85n1594_011:0575c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今付於汝。",
        "from": "X85n1594_011:0575c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝護念之。",
        "from": "X85n1594_011:0575c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃說偈曰。",
        "from": "X85n1594_011:0576a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真體自然。",
        "from": "X85n1594_011:0576a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真因真說。",
        "from": "X85n1594_011:0576a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有理領得。",
        "from": "X85n1594_011:0576a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真真法無。",
        "from": "X85n1594_011:0576a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行亦無止。",
        "from": "X85n1594_011:0576a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脇付法已。",
        "from": "X85n1594_011:0576a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即現神變。",
        "from": "X85n1594_011:0576a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而入涅槃。",
        "from": "X85n1594_011:0576a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化火自焚舍利。",
        "from": "X85n1594_011:0576a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從空而下。",
        "from": "X85n1594_011:0576a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可勝數。",
        "from": "X85n1594_011:0576a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾盛以衣裓。",
        "from": "X85n1594_011:0576a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨處建塔供養。",
        "from": "X85n1594_011:0576a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土周貞定王二十七年己亥也○北天竺有無著。",
        "from": "X85n1594_011:0576a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘闡宗教。",
        "from": "X85n1594_011:0576a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其弟天親。",
        "from": "X85n1594_011:0576a05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初尚小乘。",
        "from": "X85n1594_011:0576a05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造論五百部。",
        "from": "X85n1594_011:0576a05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無著觀其根緣將熟。",
        "from": "X85n1594_011:0576a06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃假疾召還。",
        "from": "X85n1594_011:0576a06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甫近一驛。",
        "from": "X85n1594_011:0576a06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣一弟子。",
        "from": "X85n1594_011:0576a06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往迎。",
        "from": "X85n1594_011:0576a07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜同館宿。",
        "from": "X85n1594_011:0576a07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子誦偈云。",
        "from": "X85n1594_011:0576a07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲了知。",
        "from": "X85n1594_011:0576a07_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世一切佛。",
        "from": "X85n1594_011:0576a07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀法界性。",
        "from": "X85n1594_011:0576a08_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惟心造。",
        "from": "X85n1594_011:0576a08_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天親聞之。",
        "from": "X85n1594_011:0576a08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁然開悟。",
        "from": "X85n1594_011:0576a08_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且悔昔誹斥罪過。",
        "from": "X85n1594_011:0576a09_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆緣舌根。",
        "from": "X85n1594_011:0576a09_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從臥起。",
        "from": "X85n1594_011:0576a09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執利刀。",
        "from": "X85n1594_011:0576a09_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲截其舌。",
        "from": "X85n1594_011:0576a10_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無著遙知。",
        "from": "X85n1594_011:0576a10_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伸臂捉住。",
        "from": "X85n1594_011:0576a10_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諭之曰。",
        "from": "X85n1594_011:0576a10_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝悟大乘。",
        "from": "X85n1594_011:0576a10_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋其時矣。",
        "from": "X85n1594_011:0576a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔以舌毀。",
        "from": "X85n1594_011:0576a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜以舌讚。",
        "from": "X85n1594_011:0576a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟斷舌不言。",
        "from": "X85n1594_011:0576a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其利安在。",
        "from": "X85n1594_011:0576a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天親乃止。",
        "from": "X85n1594_011:0576a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戴星而行。",
        "from": "X85n1594_011:0576a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洎覲無著。",
        "from": "X85n1594_011:0576a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽慈旨。",
        "from": "X85n1594_011:0576a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便造大乘論。",
        "from": "X85n1594_011:0576a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累五百部。",
        "from": "X85n1594_011:0576a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時號千部論師。",
        "from": "X85n1594_011:0576a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日無著入法光定。",
        "from": "X85n1594_011:0576a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜昇兜率。",
        "from": "X85n1594_011:0576a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請問彌勒菩薩金剛經義。",
        "from": "X85n1594_011:0576a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒說八十頌。",
        "from": "X85n1594_011:0576a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無著約十八住處。",
        "from": "X85n1594_011:0576a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造論二卷。",
        "from": "X85n1594_011:0576a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天親約斷二十七疑。",
        "from": "X85n1594_011:0576a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造論三卷。",
        "from": "X85n1594_011:0576a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天親復為眾講婆沙論。",
        "from": "X85n1594_011:0576a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一日所講之義。",
        "from": "X85n1594_011:0576a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃造一頌攝之。",
        "from": "X85n1594_011:0576a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且遍造諸國。",
        "from": "X85n1594_011:0576a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論師諸師不能解。",
        "from": "X85n1594_011:0576a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繇是自造長行釋頌。",
        "from": "X85n1594_011:0576a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(即今俱舍論是)一日天親從彌勒內宮而下。",
        "from": "X85n1594_011:0576a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無著問曰。",
        "from": "X85n1594_011:0576a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間四百年。",
        "from": "X85n1594_011:0576a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼天為一晝夜。",
        "from": "X85n1594_011:0576a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒於一時中。",
        "from": "X85n1594_011:0576a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就五百億天子。",
        "from": "X85n1594_011:0576a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證無生法忍。",
        "from": "X85n1594_011:0576a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未審說甚麼法。",
        "from": "X85n1594_011:0576a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天親曰。",
        "from": "X85n1594_011:0576a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "也只說這箇法。",
        "from": "X85n1594_011:0576a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止是梵音清雅。",
        "from": "X85n1594_011:0576a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人樂聞。",
        "from": "X85n1594_011:0576a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第十一",
