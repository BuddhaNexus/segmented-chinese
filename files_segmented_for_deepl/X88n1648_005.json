[
    {
        "source_sentence": "冥報記輯書卷第五",
        "from": "X88n1648_005:0317b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐隴西李義琰貞觀年中為華州縣尉。",
        "from": "X88n1648_005:0317b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此縣忽失一人莫知所在。",
        "from": "X88n1648_005:0317b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其父兄疑一讎怨家所害。",
        "from": "X88n1648_005:0317b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣縣陳請。",
        "from": "X88n1648_005:0317b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義琰案之不能得決。",
        "from": "X88n1648_005:0317b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜中執燭委細窮問。",
        "from": "X88n1648_005:0317b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至乙夜義琰據案俛首不覺。",
        "from": "X88n1648_005:0317b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死人即至。",
        "from": "X88n1648_005:0317b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶帶被傷之狀云。",
        "from": "X88n1648_005:0317b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "某被傷姓名。",
        "from": "X88n1648_005:0317b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被打殺置於某所井中。",
        "from": "X88n1648_005:0317b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公可早檢。",
        "from": "X88n1648_005:0317b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不然恐被移向他處。",
        "from": "X88n1648_005:0317b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可覓得。",
        "from": "X88n1648_005:0317b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義琰即親往覓。",
        "from": "X88n1648_005:0317b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果如所陳。",
        "from": "X88n1648_005:0317b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋而讎家云始具伏。",
        "from": "X88n1648_005:0317b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當時聞見者。",
        "from": "X88n1648_005:0317b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不驚歎。",
        "from": "X88n1648_005:0317b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐西京清禪寺先有純金像一軀。",
        "from": "X88n1648_005:0317b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長一尺四寸。",
        "from": "X88n1648_005:0317b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重八十兩。",
        "from": "X88n1648_005:0317b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋文帝之所造也。",
        "from": "X88n1648_005:0317b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞觀十四年。",
        "from": "X88n1648_005:0317b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有賊孫德信。",
        "from": "X88n1648_005:0317b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偽造璽書。",
        "from": "X88n1648_005:0317b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將一閹竪子詐稱勑遣取像。",
        "from": "X88n1648_005:0317b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺僧聞奉勑索不敢拒付之。",
        "from": "X88n1648_005:0317b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經宿事發。",
        "from": "X88n1648_005:0317b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像身已被鑄破唯頭不銷。",
        "from": "X88n1648_005:0317b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太宗大怒處以極刑。",
        "from": "X88n1648_005:0317b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德信未死之間。",
        "from": "X88n1648_005:0317b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身已爛壞徧體瘡潰。",
        "from": "X88n1648_005:0317b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺僧更加金如法鑄成。",
        "from": "X88n1648_005:0317c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐隴西李思一今居相州之滏陽縣。",
        "from": "X88n1648_005:0317c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞觀二十年正月已死經日而蘇。",
        "from": "X88n1648_005:0317c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語在冥報記。",
        "from": "X88n1648_005:0317c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至永徽三年五月又死。",
        "from": "X88n1648_005:0317c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經一宿而蘇。",
        "from": "X88n1648_005:0317c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說云以年命未盡。",
        "from": "X88n1648_005:0317c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙王放歸。",
        "from": "X88n1648_005:0317c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於王前見相州滏陽縣法觀寺僧辯珪。",
        "from": "X88n1648_005:0317c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又見會福寺僧弘亮及慧寶三人。",
        "from": "X88n1648_005:0317c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並在王前。",
        "from": "X88n1648_005:0317c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯答見冥官云。",
        "from": "X88n1648_005:0317c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧寶死時未至宜修功德。",
        "from": "X88n1648_005:0317c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯珪弘亮今歲必死。",
        "from": "X88n1648_005:0317c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯珪等是年果相繼卒。",
        "from": "X88n1648_005:0317c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後寺僧令一巫者就弘亮等舊房召二僧問之。",
        "from": "X88n1648_005:0317c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯珪曰。",
        "from": "X88n1648_005:0317c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為破齋今受大苦。",
        "from": "X88n1648_005:0317c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼語諸弟子等曰。",
        "from": "X88n1648_005:0317c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我作齋救披苦難。",
        "from": "X88n1648_005:0317c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子輩即為營齋。",
        "from": "X88n1648_005:0317c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巫者又云。",
        "from": "X88n1648_005:0317c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯珪已得免罪。",
        "from": "X88n1648_005:0317c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘亮云。",
        "from": "X88n1648_005:0317c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為破齋兼妄持人長短。",
        "from": "X88n1648_005:0317c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今被拔舌痛苦。",
        "from": "X88n1648_005:0317c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能多言。",
        "from": "X88n1648_005:0317c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相州智力寺僧慧永等說之。",
        "from": "X88n1648_005:0317c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐曹州離狐人仕智揩少好釋典不仕。",
        "from": "X88n1648_005:0317c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不妻娶。",
        "from": "X88n1648_005:0317c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被僧衣服隱居泰山。",
        "from": "X88n1648_005:0317c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以讀誦為事。",
        "from": "X88n1648_005:0317c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞觀二十一年。",
        "from": "X88n1648_005:0317c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於山中遇患垂死。",
        "from": "X88n1648_005:0317c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以袈裟覆體昏然如夢。",
        "from": "X88n1648_005:0317c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見老母及美女數十人屢來相擾。",
        "from": "X88n1648_005:0317c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智揩端然不動。",
        "from": "X88n1648_005:0317c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群女漸相逼斥。",
        "from": "X88n1648_005:0317c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並云。",
        "from": "X88n1648_005:0317c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轝將擲置北澗裏。",
        "from": "X88n1648_005:0317c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂總近前同時執捉。",
        "from": "X88n1648_005:0317c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有攬著袈裟者。",
        "from": "X88n1648_005:0317c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂齊聲念佛。",
        "from": "X88n1648_005:0317c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却後懺悔請為造阿彌陀佛。",
        "from": "X88n1648_005:0317c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并誦觀音菩薩三十餘徧。",
        "from": "X88n1648_005:0317c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少間遂覺體上大汗。",
        "from": "X88n1648_005:0317c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便即瘳愈。",
        "from": "X88n1648_005:0317c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐魏州武強人齊士望貞觀二十一年死。",
        "from": "X88n1648_005:0317c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經七日而蘇。",
        "from": "X88n1648_005:0317c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自云。",
        "from": "X88n1648_005:0317c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初死之後被引見王。",
        "from": "X88n1648_005:0317c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即付曹司別遣勘當。",
        "from": "X88n1648_005:0317c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經四五日勘簿云。",
        "from": "X88n1648_005:0317c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與合死者同姓字。",
        "from": "X88n1648_005:0317c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然未合即死。",
        "from": "X88n1648_005:0317c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刑官語士望曰。",
        "from": "X88n1648_005:0317c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝生平好燒雞子。",
        "from": "X88n1648_005:0317c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜受罪而歸。",
        "from": "X88n1648_005:0317c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即命人送其出門。",
        "from": "X88n1648_005:0317c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去曹司一二里。",
        "from": "X88n1648_005:0317c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見一城。",
        "from": "X88n1648_005:0317c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞城中有鼓吹之聲。",
        "from": "X88n1648_005:0317c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士望欣然趨走而入。",
        "from": "X88n1648_005:0318a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既入之後城門已閉。",
        "from": "X88n1648_005:0318a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中更無屋宇。",
        "from": "X88n1648_005:0318a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧地皆是熱灰。",
        "from": "X88n1648_005:0318a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士望周章不知所計。",
        "from": "X88n1648_005:0318a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒灼其足殊常痛苦。",
        "from": "X88n1648_005:0318a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士望四顧城門並開。",
        "from": "X88n1648_005:0318a03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及走向門其扉既掩。",
        "from": "X88n1648_005:0318a03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡經一日。",
        "from": "X88n1648_005:0318a04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人命門者曰。",
        "from": "X88n1648_005:0318a04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開門放昨曰罪人出。",
        "from": "X88n1648_005:0318a04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既出。",
        "from": "X88n1648_005:0318a04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即命人送歸。",
        "from": "X88n1648_005:0318a05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使者辭以路遙。",
        "from": "X88n1648_005:0318a05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷延不送之。",
        "from": "X88n1648_005:0318a05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始求以錢絹。",
        "from": "X88n1648_005:0318a05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士望許諾。",
        "from": "X88n1648_005:0318a06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂經歷川塗踐履荊棘。",
        "from": "X88n1648_005:0318a06_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行至一處。",
        "from": "X88n1648_005:0318a06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如環堵。",
        "from": "X88n1648_005:0318a06_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中有坑深黑。",
        "from": "X88n1648_005:0318a07_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士望懼之。",
        "from": "X88n1648_005:0318a07_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使者推之。",
        "from": "X88n1648_005:0318a07_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂入坑內。",
        "from": "X88n1648_005:0318a07_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺漸蘇。",
        "from": "X88n1648_005:0318a08_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋乃造紙錢等待焉。",
        "from": "X88n1648_005:0318a08_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使者依期還到。",
        "from": "X88n1648_005:0318a08_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士望妻亦同見之。",
        "from": "X88n1648_005:0318a08_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐汾州隰城人劉善經少小孤母所撫育。",
        "from": "X88n1648_005:0318a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其母平生常習讀內典。",
        "from": "X88n1648_005:0318a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精勤苦行。",
        "from": "X88n1648_005:0318a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以貞觀二十一年亡。",
        "from": "X88n1648_005:0318a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善經哀毀遇禮。",
        "from": "X88n1648_005:0318a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哭聲不輟。",
        "from": "X88n1648_005:0318a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至明年善經怳惚之間見其母曰。",
        "from": "X88n1648_005:0318a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為生時修福得受男身。",
        "from": "X88n1648_005:0318a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今生於此縣南石趙村宋家。",
        "from": "X88n1648_005:0318a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲相見可即至彼也。",
        "from": "X88n1648_005:0318a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言終不見。",
        "from": "X88n1648_005:0318a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善經如言而往不移時而至彼。",
        "from": "X88n1648_005:0318a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是日宋家生男。",
        "from": "X88n1648_005:0318a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善經因奉衣物具言由委。",
        "from": "X88n1648_005:0318a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此男見在。",
        "from": "X88n1648_005:0318a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善經常以母禮事之。",
        "from": "X88n1648_005:0318a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隰州沙門善撫與善經舊知。",
        "from": "X88n1648_005:0318a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見善經及鄉人所說。",
        "from": "X88n1648_005:0318a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為餘令言之。",
        "from": "X88n1648_005:0318a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐范陽盧元禮貞觀末為泗州漣水縣尉。",
        "from": "X88n1648_005:0318a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾因重病悶絕。",
        "from": "X88n1648_005:0318a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經一日而蘇。",
        "from": "X88n1648_005:0318a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云有人引至府舍。",
        "from": "X88n1648_005:0318a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一官人過無侍衛。",
        "from": "X88n1648_005:0318a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元禮遂至此官人座上。",
        "from": "X88n1648_005:0318a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據牀而坐。",
        "from": "X88n1648_005:0318a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官人目侍者。",
        "from": "X88n1648_005:0318a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一手提頭一手捉脚。",
        "from": "X88n1648_005:0318a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲元禮於階下。",
        "from": "X88n1648_005:0318a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良久乃起。",
        "from": "X88n1648_005:0318a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行至一別院。",
        "from": "X88n1648_005:0318a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更進向南入一大堂中。",
        "from": "X88n1648_005:0318a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見竈數十百口。",
        "from": "X88n1648_005:0318a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其竈上有氣。",
        "from": "X88n1648_005:0318a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矗然如雲霧直上。",
        "from": "X88n1648_005:0318a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沸聲喧雜有同數千萬人。",
        "from": "X88n1648_005:0318a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元禮仰視。",
        "from": "X88n1648_005:0318a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見似籠盛人縣之此氣之上。",
        "from": "X88n1648_005:0318a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云是蒸罪人處。",
        "from": "X88n1648_005:0318a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元禮遂發願大語云。",
        "from": "X88n1648_005:0318b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代一切眾生受罪。",
        "from": "X88n1648_005:0318b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂解衣赤體自投於釜中。",
        "from": "X88n1648_005:0318b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因即昏然不覺有痛。",
        "from": "X88n1648_005:0318b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾有一沙門。",
        "from": "X88n1648_005:0318b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "挽元禮出云。",
        "from": "X88n1648_005:0318b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知汝至心乃送其歸。",
        "from": "X88n1648_005:0318b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽如睡覺。",
        "from": "X88n1648_005:0318b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂斷酒肉。",
        "from": "X88n1648_005:0318b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經三四歲後卒於洛。",
        "from": "X88n1648_005:0318b04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相州滏陽縣智力寺僧玄高俗姓趙氏。",
        "from": "X88n1648_005:0318b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其兄子先身於同村馬家為兒。",
        "from": "X88n1648_005:0318b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬家兒至貞觀末死。",
        "from": "X88n1648_005:0318b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨死之際顧謂母曰。",
        "from": "X88n1648_005:0318b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒於趙宗家有宿因緣。",
        "from": "X88n1648_005:0318b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死後當與宗家為孫。",
        "from": "X88n1648_005:0318b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗即與其同村也。",
        "from": "X88n1648_005:0318b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其母不信。",
        "from": "X88n1648_005:0318b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以墨點兒左脇作一大黑子。",
        "from": "X88n1648_005:0318b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙家妻又夢。",
        "from": "X88n1648_005:0318b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此兒來云。",
        "from": "X88n1648_005:0318b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與孃為息。",
        "from": "X88n1648_005:0318b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因而有娠。",
        "from": "X88n1648_005:0318b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢中所見宛然馬家之子。",
        "from": "X88n1648_005:0318b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "產訖驗其墨子還在舊處。",
        "from": "X88n1648_005:0318b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及兒年三藏無人導引。",
        "from": "X88n1648_005:0318b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃自向馬家云。",
        "from": "X88n1648_005:0318b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是兒舊舍也。",
        "from": "X88n1648_005:0318b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于今現存。",
        "from": "X88n1648_005:0318b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已年十四五。",
        "from": "X88n1648_005:0318b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相州智力寺僧慧永法真等說之。",
        "from": "X88n1648_005:0318b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐曹州離狐人裴則男貞觀末年二十一死。",
        "from": "X88n1648_005:0318b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經三日而穌。",
        "from": "X88n1648_005:0318b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自云。",
        "from": "X88n1648_005:0318b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初死被一人將至王所。",
        "from": "X88n1648_005:0318b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王衣白非常鮮潔。",
        "from": "X88n1648_005:0318b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王遣此人將牛耕地。",
        "from": "X88n1648_005:0318b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人訴云。",
        "from": "X88n1648_005:0318b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兄弟幼小無人扶侍二親。",
        "from": "X88n1648_005:0318b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王即憫之。",
        "from": "X88n1648_005:0318b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃遣使將向南。",
        "from": "X88n1648_005:0318b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至第三重門。",
        "from": "X88n1648_005:0318b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入見鑊湯及刀山劒樹。",
        "from": "X88n1648_005:0318b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又見數千人頭皆被斬布列地上。",
        "from": "X88n1648_005:0318b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此頭並口云大飢。",
        "from": "X88n1648_005:0318b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當村有一老母。",
        "from": "X88n1648_005:0318b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年向七十。",
        "from": "X88n1648_005:0318b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時猶未死。",
        "from": "X88n1648_005:0318b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂見在鑊湯前然火。",
        "from": "X88n1648_005:0318b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀望訖還至王前。",
        "from": "X88n1648_005:0318b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見同村人張成。",
        "from": "X88n1648_005:0318b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦未死。",
        "from": "X88n1648_005:0318b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一人訴成云毀破某屋。",
        "from": "X88n1648_005:0318b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王遣使檢之。",
        "from": "X88n1648_005:0318b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報云。",
        "from": "X88n1648_005:0318b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是實。",
        "from": "X88n1648_005:0318b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成曰。",
        "from": "X88n1648_005:0318b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成犂地不覺。",
        "from": "X88n1648_005:0318b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犂破其塚。",
        "from": "X88n1648_005:0318b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非故然也。",
        "from": "X88n1648_005:0318b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X88n1648_005:0318b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝雖非故。",
        "from": "X88n1648_005:0318b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心終為不謹耳。",
        "from": "X88n1648_005:0318b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂令人杖其腰上七下。",
        "from": "X88n1648_005:0318b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有頃王曰。",
        "from": "X88n1648_005:0318b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝更無事。",
        "from": "X88n1648_005:0318b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放汝早還。",
        "from": "X88n1648_005:0318b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王乃使人送去遣。",
        "from": "X88n1648_005:0318b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北出踰牆及登牆望見其舍。",
        "from": "X88n1648_005:0318b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂聞哭聲。",
        "from": "X88n1648_005:0318c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃跳下牆。",
        "from": "X88n1648_005:0318c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽覺起坐。",
        "from": "X88n1648_005:0318c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既穌之後。",
        "from": "X88n1648_005:0318c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具為鄉曲言之。",
        "from": "X88n1648_005:0318c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邑人視張成腰上有七下杖迹。",
        "from": "X88n1648_005:0318c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迹極青黑。",
        "from": "X88n1648_005:0318c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問其毀墓。",
        "from": "X88n1648_005:0318c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答云不虗。",
        "from": "X88n1648_005:0318c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老母尋病。",
        "from": "X88n1648_005:0318c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未幾而死。",
        "from": "X88n1648_005:0318c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐并州石壁寺有一老僧禪誦為業。",
        "from": "X88n1648_005:0318c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進練行。",
        "from": "X88n1648_005:0318c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞觀末有鴿。",
        "from": "X88n1648_005:0318c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巢其房楹上哺養二鶵。",
        "from": "X88n1648_005:0318c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法師每有餘食常就巢哺之。",
        "from": "X88n1648_005:0318c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鴿鶵後雖漸長羽翼未成。",
        "from": "X88n1648_005:0318c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃並學飛俱墜地而死。",
        "from": "X88n1648_005:0318c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧並收瘞之。",
        "from": "X88n1648_005:0318c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經旬後僧夜夢。",
        "from": "X88n1648_005:0318c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小兒白之曰。",
        "from": "X88n1648_005:0318c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒等為先有少罪遂受鴿身。",
        "from": "X88n1648_005:0318c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比來聞法師讀法華經及金剛般若經。",
        "from": "X88n1648_005:0318c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既聞妙法得受人身。",
        "from": "X88n1648_005:0318c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒等今於此寺側十餘里某村某姓名家託生為男。",
        "from": "X88n1648_005:0318c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十月之外當即誕育。",
        "from": "X88n1648_005:0318c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧乃依期往視見此家。",
        "from": "X88n1648_005:0318c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一婦人同時誕育二子。",
        "from": "X88n1648_005:0318c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因為作滿月齋。",
        "from": "X88n1648_005:0318c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧呼為鴿兒。",
        "from": "X88n1648_005:0318c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩兒並應之曰諾。",
        "from": "X88n1648_005:0318c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一應之後歲餘始言(右此一驗出冥報拾遺)報恩事廣不可具述。",
        "from": "X88n1648_005:0318c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐鄭州陽武縣婦女姓朱其夫先負外縣人絹百匹。",
        "from": "X88n1648_005:0318c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫死之後遂無人還。",
        "from": "X88n1648_005:0318c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞觀末因病死。",
        "from": "X88n1648_005:0318c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經再宿而蘇。",
        "from": "X88n1648_005:0318c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自云彼人執至一所。",
        "from": "X88n1648_005:0318c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一人云。",
        "from": "X88n1648_005:0318c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我是司命府吏。",
        "from": "X88n1648_005:0318c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝夫生時負我家絹若干匹。",
        "from": "X88n1648_005:0318c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以追汝。",
        "from": "X88n1648_005:0318c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今放汝歸。",
        "from": "X88n1648_005:0318c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜急具物至某縣某村某家送還我母。",
        "from": "X88n1648_005:0318c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其不送捉遣更切。",
        "from": "X88n1648_005:0319a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼為白我孃。",
        "from": "X88n1648_005:0319a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "努力為某造像修福。",
        "from": "X88n1648_005:0319a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱即告乞。",
        "from": "X88n1648_005:0319a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄉閭得絹送還其母。",
        "from": "X88n1648_005:0319a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具言其兒貌狀。",
        "from": "X88n1648_005:0319a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有同生平。",
        "from": "X88n1648_005:0319a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其母亦對之流洟歔欷久之。",
        "from": "X88n1648_005:0319a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥報記輯書卷第五",
        "from": "X88n1648_005:0319a06_0",
        "context_with_next_sentence": false
    }
]