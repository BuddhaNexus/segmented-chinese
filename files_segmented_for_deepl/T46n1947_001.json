[
    {
        "source_sentence": "釋迦如來涅槃禮讚文序",
        "from": "T46n1947_001:0963c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋霅谿沙門仁岳撰",
        "from": "T46n1947_001:0963c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儒家流有終身之憂者。",
        "from": "T46n1947_001:0963c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "考妣遠日之謂也。",
        "from": "T46n1947_001:0963c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋氏子豈不然乎。",
        "from": "T46n1947_001:0963c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼所以思生我劬勞之親。",
        "from": "T46n1947_001:0963c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所以懷度我慈悲之父。",
        "from": "T46n1947_001:0963c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其德罔極其孝攸同。",
        "from": "T46n1947_001:0963c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀夫叔世出家之徒。",
        "from": "T46n1947_001:0963c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具沙門之形。",
        "from": "T46n1947_001:0963c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稟釋迦之姓。",
        "from": "T46n1947_001:0963c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至佛涅槃日。",
        "from": "T46n1947_001:0963c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能齋莊致禮者眾矣。",
        "from": "T46n1947_001:0963c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予竊傷之。",
        "from": "T46n1947_001:0963c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗讀涅槃後分。",
        "from": "T46n1947_001:0963c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來滅後。",
        "from": "T46n1947_001:0963c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵釋天眾大龜氏等。",
        "from": "T46n1947_001:0963c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不皆以偈頌為之哀歎。",
        "from": "T46n1947_001:0963c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又僧祇律。",
        "from": "T46n1947_001:0963c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令涅槃日稱揚佛德。",
        "from": "T46n1947_001:0963c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是追述化迹輒成讚辭。",
        "from": "T46n1947_001:0963c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡十四章章八句。",
        "from": "T46n1947_001:0963c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初十章讚佛。",
        "from": "T46n1947_001:0963c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次一章讚法。",
        "from": "T46n1947_001:0963c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後三章讚僧。",
        "from": "T46n1947_001:0963c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其諸方軌亦備行用。",
        "from": "T46n1947_001:0963c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所冀吾眾於二月十五日。",
        "from": "T46n1947_001:0963c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴事經像精設供養。",
        "from": "T46n1947_001:0963c29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命聲德者唱之。",
        "from": "T46n1947_001:0963c29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以展必哀之誠矣。",
        "from": "T46n1947_001:0964a01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔孤山中庸子有涅槃八德讚。",
        "from": "T46n1947_001:0964a01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋倣於傅徽白衣觀音禮而作也。",
        "from": "T46n1947_001:0964a02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為吳蜀音韻碩異。",
        "from": "T46n1947_001:0964a03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故江浙間多不行焉。",
        "from": "T46n1947_001:0964a03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今擬天竺法師讚智者文撰之。",
        "from": "T46n1947_001:0964a04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非苟好異務在生善。",
        "from": "T46n1947_001:0964a04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知我者且無以色聲求佛。",
        "from": "T46n1947_001:0964a05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪道為讓哉。",
        "from": "T46n1947_001:0964a05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦如來涅槃禮讚文(天台智者大師齋忌禮讚文同)(初入道場普禮三拜焚香互跪首者唱云)。",
        "from": "T46n1947_001:0964a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭以。",
        "from": "T46n1947_001:0964a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能仁應世寂默證真。",
        "from": "T46n1947_001:0964a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓千界以居尊。",
        "from": "T46n1947_001:0964a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撫四生而為子。",
        "from": "T46n1947_001:0964a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形隨物現。",
        "from": "T46n1947_001:0964a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元同非相之身。",
        "from": "T46n1947_001:0964a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教逐機興。",
        "from": "T46n1947_001:0964a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詎異無言之道。",
        "from": "T46n1947_001:0964a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰自法輪載轉。",
        "from": "T46n1947_001:0964a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化迹彌隆。",
        "from": "T46n1947_001:0964a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半字初談。",
        "from": "T46n1947_001:0964a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬擊蒙而靡倦。",
        "from": "T46n1947_001:0964a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百金後寄。",
        "from": "T46n1947_001:0964a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶贖命以惟勤。",
        "from": "T46n1947_001:0964a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令煩惱之儔。",
        "from": "T46n1947_001:0964a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住如來之藏。",
        "from": "T46n1947_001:0964a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四心告滿三德云歸。",
        "from": "T46n1947_001:0964a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂不令一人獨得滅度。",
        "from": "T46n1947_001:0964a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以如來滅度而滅度之。",
        "from": "T46n1947_001:0964a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故入于涅槃不可得而思議。",
        "from": "T46n1947_001:0964a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等鶴林既遠痛失於前緣。",
        "from": "T46n1947_001:0964a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像法猶存忝遵於遺訓。",
        "from": "T46n1947_001:0964a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今值中春之日。",
        "from": "T46n1947_001:0964a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緬懷北首之儀澗藻谿蘋。",
        "from": "T46n1947_001:0964a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊展薦羞之禮。",
        "from": "T46n1947_001:0964a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巴歈俚詠。",
        "from": "T46n1947_001:0964a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少陳哀歎之誠。",
        "from": "T46n1947_001:0964a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願洪慈俯迴昭鑒(至此總禮一拜晨朝必須致請。",
        "from": "T46n1947_001:0964a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘時存略。",
        "from": "T46n1947_001:0964a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請者一位三唱)。",
        "from": "T46n1947_001:0964a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃教主堪忍世尊釋迦文佛。",
        "from": "T46n1947_001:0964a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所說法門修多羅藏。",
        "from": "T46n1947_001:0964a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所集聖賢菩薩僧眾。",
        "from": "T46n1947_001:0964a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所集聖賢緣覺僧眾。",
        "from": "T46n1947_001:0964a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請涅槃會上所集聖賢聲聞僧眾。",
        "from": "T46n1947_001:0964b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟願降臨道場受我供養。",
        "from": "T46n1947_001:0964b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　(歎佛偈依經中迦葉菩薩所說歎後宣疏或隨意陳白)。",
        "from": "T46n1947_001:0964b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　憐憫世間大醫王　　身及智慧俱寂靜　無我法中有真我　　是我頂禮無上尊　　　(向下禮讚凡唱一身至釋迦字和之禮畢起立唱讚)。",
        "from": "T46n1947_001:0964b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊現聲光集眾時身釋迦文佛。",
        "from": "T46n1947_001:0964b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　吉河堅樹生初日　　靈耀仙音遍十方　為召群生問後疑　　示言大覺歸元寂　世界寶嚴如樂土　　人身血現似奢華　天供雲臻但默然　　一時稽首懷憂惱　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊受純陀施食時身釋迦文佛。",
        "from": "T46n1947_001:0964b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來久證遮那體　　權現臨終應供儀　能與毛端變化身　　受茲華氏粳糧食　六塵雖謂空無相　　五果當知結有緣　我今追遠奉粢盛　　願證真常同妙義　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊臥寶床現病時身釋迦文佛。",
        "from": "T46n1947_001:0964b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　付囑文殊傳正法　　俄然背疾示眾生　曲肱右脅類嬰兒　　收視無言如病者　鄭重任聽迦葉問　　從容猶待世王來　再起流光燭大千　　滿中群苦皆消蕩　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入月愛三昧時身釋迦文佛。",
        "from": "T46n1947_001:0964b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大悲俯念阿闍世　　隨順耆婆發善心　麑座重舒月愛光　　袞衣頓覺身瘡愈　歸佛始知邪道誤　　聞經方了逆緣空　伊蘭叢裏出栴檀　　奇哉取譬無根信　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊示人天相好時身釋迦文佛。",
        "from": "T46n1947_001:0964c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　手祛法服舒身相　　昇降虛空四六迴　欲入泥洹寂靜門　　今觀紫磨莊嚴聚　麋軀曷報修因德　　塵劫難逢出世緣　遺教殷勤囑未來　　歸依三寶皆當受　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊觀世間寂定時身釋迦文佛。",
        "from": "T46n1947_001:0964c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　應物已曾開祕藏　　還源相次近中宵　又放光明號涅槃　　遍遊禪定咸超越　種智莫非觀實相　　有情寧免見無常　薪盡臨當火滅時　　阿難於是心迷亂　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入四禪滅度時身釋迦文佛。",
        "from": "T46n1947_001:0964c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　重入四禪休顧命　　便於三昧示云亡　雙林變鶴覆金棺　　大地如雷震沙界　釋梵累陳哀歎偈　　魔邪聊解戰爭憂　慧日慈光罷照臨　　無明長夜何當曉　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0964c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入金棺白[疊*毛]時身釋迦文佛。",
        "from": "T46n1947_001:0964c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　國人相問荼毘法　　天帝親傳囑累言　俾順輪王所化儀　　令生梵眾無疆福　細[疊*毛]千重周聖體　　寶棺七匝繞仙城　再以香泉灌沐時　　咸覩妙嚴身不壞　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊示飲光在柩時身釋迦文佛。",
        "from": "T46n1947_001:0965a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　尊者飲光居鷲嶺　　出禪知佛已歸真　遙望拘尸徒步來　　正值闍維襄事日　柩中先現身金色　　拜次仍迴足輻輪　最後能隨哀慕心　　是為平等慈悲相　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃教主堪忍世尊入香樓火化時身釋迦文佛。",
        "from": "T46n1947_001:0965a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　卍字胸中流聖火　　眾香樓上爇真軀　玉相金姿竟不存　　霜綿素[疊*毛]還如故　舍利晶熒分國土　　塔婆高顯示人天　我等慚生像法餘　　空讚當時遺化事　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所說法門修多羅藏。",
        "from": "T46n1947_001:0965a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　始為純陀敷妙義　　終因須跋演微言　力扶毘奈破權疑　　能使闡提生實信　飲用醍醐勝眾味　　浴臨渤海足群流　我願聞持盡後身　　圓伊滿字常修學　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所集聖賢菩薩僧集。",
        "from": "T46n1947_001:0965a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　爰求無上菩提道　　遍集微塵薩埵因　不於三界現諸心　　等視眾生如一子　引道大乘令發趣　　提携弱喪使知歸　人中自在盡猶龍　　乘時利見難思議　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所集聖賢覺僧眾。",
        "from": "T46n1947_001:0965b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　因緣罙入輪迴境　　觀照優遊解脫門　福智曾經累劫修　　神通能起無方用　已捨鹿車行直道　　不同犀角守孤峰　來會娑羅雙樹間　　猶如鏡像隨形現　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮涅槃會上所集聖賢聲聞僧眾。",
        "from": "T46n1947_001:0965b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　調伏諸根皆寂靜　　受持遺教悉流通　既於朽宅免焚燒　　不向春池收瓦礫　四果並堪為佛子　　三修俱得會經王　常與無常畢竟同　　是謂莊嚴雙樹者　　　故我一心歸命頂禮。",
        "from": "T46n1947_001:0965b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　(禮讚已復跪秉爐如常運想披陳五悔)。",
        "from": "T46n1947_001:0965b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懺悔。",
        "from": "T46n1947_001:0965b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及十方法界一切眾生。",
        "from": "T46n1947_001:0965b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟自心清淨之元。",
        "from": "T46n1947_001:0965b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具種智妙明之性。",
        "from": "T46n1947_001:0965b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千如未眹本絕於聖凡。",
        "from": "T46n1947_001:0965b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六妄成因遂流於生死。",
        "from": "T46n1947_001:0965b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是眉珠頓失。",
        "from": "T46n1947_001:0965b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼膜重增。",
        "from": "T46n1947_001:0965b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不逢明鏡之醫罔會金[金*(由/廾)]之治。",
        "from": "T46n1947_001:0965b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣宿植生處人倫。",
        "from": "T46n1947_001:0965b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "值釋迦法中。",
        "from": "T46n1947_001:0965b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預比丘僧數。",
        "from": "T46n1947_001:0965b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以律儀匪慎。",
        "from": "T46n1947_001:0965b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道品難成。",
        "from": "T46n1947_001:0965b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一乘了義之談。",
        "from": "T46n1947_001:0965b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未開實慧。",
        "from": "T46n1947_001:0965b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七聚防非之制。",
        "from": "T46n1947_001:0965b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多犯深諐。",
        "from": "T46n1947_001:0965b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畜不淨以資身。",
        "from": "T46n1947_001:0965b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順無明而為行。",
        "from": "T46n1947_001:0965b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮囊有缺。",
        "from": "T46n1947_001:0965b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠懷溺海之憂。",
        "from": "T46n1947_001:0965b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華屋空存。",
        "from": "T46n1947_001:0965b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧受入門之賜。",
        "from": "T46n1947_001:0965b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則眇觀泥越。",
        "from": "T46n1947_001:0965b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躬事懺摩。",
        "from": "T46n1947_001:0965b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既發露於罪根。",
        "from": "T46n1947_001:0965b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃淨除於業障。",
        "from": "T46n1947_001:0965b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛慈普覆法力潛通。",
        "from": "T46n1947_001:0965b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故我歸依必垂護念。",
        "from": "T46n1947_001:0965b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　懺悔已至心歸命三寶。",
        "from": "T46n1947_001:0965b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心勸請。",
        "from": "T46n1947_001:0965b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方諸佛同常寂　　各為眾生出世間　既成道果已降魔　　勸轉法輪當度物　優曇瑞蕚良難見　　師子雄音豈易聞　乃至隨機現滅時　　請以洪慈延劫壽　　　勸請已至心歸命三寶。",
        "from": "T46n1947_001:0965b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心隨喜。",
        "from": "T46n1947_001:0965c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　圓通已是開方便　　五衍無非會一乘　去來今世有修行　　身語意業皆隨喜　黃葉謂金因亦善　　聚沙為塔道猶成　一切曾生嫉恚心　　故茲悔過咸稱讚　　　隨喜已至心歸命三寶。",
        "from": "T46n1947_001:0965c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心迴向。",
        "from": "T46n1947_001:0965c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　疇昔與今諸福業　　總將空慧悉融通　所作皆成四德因　　不為再求三有果　庶彙若非同解脫　　我心終未取菩提　萬水唯朝大海宗　　其猶迴向無差別　　　迴向已至心歸命三寶。",
        "from": "T46n1947_001:0965c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心發願。",
        "from": "T46n1947_001:0965c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　誓向此身修般若　　常觀我佛住泥洹　不離因緣所起心　　即見空中無相體　若効雪山書樹石　　或於田里舉筌蹄　普願猶如妙吉祥　　俱時明了如來性　　　發願已至心歸命三寶。",
        "from": "T46n1947_001:0965c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　(右旋道場諷遺教經稱揚佛號盡誠而退)。",
        "from": "T46n1947_001:0965c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦如來涅槃禮讚文",
        "from": "T46n1947_001:0965c24_0",
        "context_with_next_sentence": false
    }
]