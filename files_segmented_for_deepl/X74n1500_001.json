[
    {
        "source_sentence": "蘭盆獻供儀(并序)",
        "from": "X74n1500_001:1069a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔孤山法師甞作蘭盆禮讚文。",
        "from": "X74n1500_001:1069a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三寶目連共為六位。",
        "from": "X74n1500_001:1069a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟白懺悔各四句而已。",
        "from": "X74n1500_001:1069a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍用常途羅漢禮請之聲。",
        "from": "X74n1500_001:1069a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後真悟律師更為天竺祖禮唱之。",
        "from": "X74n1500_001:1069a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂加啟請冠于讚首。",
        "from": "X74n1500_001:1069a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "移孤山四句以為歎佛。",
        "from": "X74n1500_001:1069a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予謂釋子奉行蘭盆。",
        "from": "X74n1500_001:1069a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固當代為存亡露過陳悔。",
        "from": "X74n1500_001:1069a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又依經設供必先呪願。",
        "from": "X74n1500_001:1069a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二乃法會之至要。",
        "from": "X74n1500_001:1069a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而昔皆遺之。",
        "from": "X74n1500_001:1069a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今於歎佛後依經出呪願法。",
        "from": "X74n1500_001:1069a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又禮讚後別出悔文。",
        "from": "X74n1500_001:1069a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘竝仍舊貫。",
        "from": "X74n1500_001:1069a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無別改作。",
        "from": "X74n1500_001:1069a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有加圭峯一讚及勸請等偈。",
        "from": "X74n1500_001:1069a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今例不存。",
        "from": "X74n1500_001:1069a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各其志爾。",
        "from": "X74n1500_001:1069a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘杭沙門釋　元照　重集。",
        "from": "X74n1500_001:1069a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(初入道場。",
        "from": "X74n1500_001:1069a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三禮已。",
        "from": "X74n1500_001:1069a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互跪。",
        "from": "X74n1500_001:1069a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散華。",
        "from": "X74n1500_001:1069a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首者唱云)。",
        "from": "X74n1500_001:1069a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭以牟尼化主。",
        "from": "X74n1500_001:1069a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大孝慈尊。",
        "from": "X74n1500_001:1069a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三祗功行告圓。",
        "from": "X74n1500_001:1069a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬德莊嚴克備。",
        "from": "X74n1500_001:1069a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在因在果咸推孝順為宗。",
        "from": "X74n1500_001:1069a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居聖居凡皆以報恩為本。",
        "from": "X74n1500_001:1069a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋以王宮誕瑞。",
        "from": "X74n1500_001:1069a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄金輪而出家。",
        "from": "X74n1500_001:1069a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道樹證真。",
        "from": "X74n1500_001:1069a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏天魔而成聖。",
        "from": "X74n1500_001:1069a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指三千為化境。",
        "from": "X74n1500_001:1069a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演八萬為法門。",
        "from": "X74n1500_001:1069a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親昇忉利天中為摩耶而說法。",
        "from": "X74n1500_001:1069a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躬向迦維國內酬淨飯以擔棺。",
        "from": "X74n1500_001:1069a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩目連救母無方。",
        "from": "X74n1500_001:1069a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示自恣盂蘭玅供。",
        "from": "X74n1500_001:1069a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使盆羅百味式貢三尊。",
        "from": "X74n1500_001:1069a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰賢聖之威光。",
        "from": "X74n1500_001:1069a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濟自他之存沒。",
        "from": "X74n1500_001:1069a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則爰當休夏。",
        "from": "X74n1500_001:1069a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊展微餚。",
        "from": "X74n1500_001:1069b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普伸供獻之儀。",
        "from": "X74n1500_001:1069b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用答劬勞之德。",
        "from": "X74n1500_001:1069b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟冀十方聖眾俱降道場。",
        "from": "X74n1500_001:1069b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同享克誠。",
        "from": "X74n1500_001:1069b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯迴昭鑒。",
        "from": "X74n1500_001:1069b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(唱已一禮。",
        "from": "X74n1500_001:1069b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復跪執爐。",
        "from": "X74n1500_001:1069b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥想眾聖。",
        "from": "X74n1500_001:1069b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請云)。",
        "from": "X74n1500_001:1069b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請蘭盆教主久報親恩釋迦文佛。",
        "from": "X74n1500_001:1069b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願降臨道場受我供養(三請一禮下同)。",
        "from": "X74n1500_001:1069b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請蘭盆至教報親㧞苦法門修多羅藏。",
        "from": "X74n1500_001:1069b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請十方自恣得道聖賢菩薩僧眾。",
        "from": "X74n1500_001:1069b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請十方自恣得道聖賢緣覺僧眾。",
        "from": "X74n1500_001:1069b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請十方自恣得道聖賢聲聞僧眾。",
        "from": "X74n1500_001:1069b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請報親入道起教利生目連尊者。",
        "from": "X74n1500_001:1069b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(請已起立。",
        "from": "X74n1500_001:1069b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱歎三寶。",
        "from": "X74n1500_001:1069b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同聲呪願)。",
        "from": "X74n1500_001:1069b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　稽首釋迦真教法　　三乘賢聖目連尊　我今稟教報親恩　　願軫慈悲聽讚歎我等各為報答所生父母罔極深恩。",
        "from": "X74n1500_001:1069b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具飯百味五果香油挺燭。",
        "from": "X74n1500_001:1069b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養三寶．十方自恣大德眾僧。",
        "from": "X74n1500_001:1069b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願使現在父母壽命百年。",
        "from": "X74n1500_001:1069b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一切苦惱之患。",
        "from": "X74n1500_001:1069b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至七世父母離餓鬼苦。",
        "from": "X74n1500_001:1069b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生人天中。",
        "from": "X74n1500_001:1069b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福樂無極。",
        "from": "X74n1500_001:1069b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧周法界無量眾生。",
        "from": "X74n1500_001:1069b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承此熏修俱沾利樂。",
        "from": "X74n1500_001:1069b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(三徧。",
        "from": "X74n1500_001:1069b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或更陳敘宣疏。",
        "from": "X74n1500_001:1069b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或念佛等。",
        "from": "X74n1500_001:1069b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨時自裁。",
        "from": "X74n1500_001:1069b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後禮讚。",
        "from": "X74n1500_001:1069b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱云)。",
        "from": "X74n1500_001:1069b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮蘭盆教主久報親恩釋迦文佛。",
        "from": "X74n1500_001:1069b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歷劫修行成聖道　　目連哀請演真乘　父王反拜踊虗空　　田主聞言解羅網　修因證果同歸孝　　化他自行盡酬恩　願迴慈眼視眾生　　令彼存亡皆受賜故我一心歸命頂禮。",
        "from": "X74n1500_001:1069b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(此同聲和已。",
        "from": "X74n1500_001:1069b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三禮。",
        "from": "X74n1500_001:1069b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下竝同)。",
        "from": "X74n1500_001:1069b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮蘭盆至教報親拔苦法門修多羅藏。",
        "from": "X74n1500_001:1069c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　金口廣談無量教　　報親唯此應機緣　拔苦偏稱自恣僧　　垂慈更示蘭盆法　慶喜宣傳言已備　　曇摩翻譯道彌光　王臣貴賤悉遵行　　玅訓明明逾日月一心頂禮十方自恣得道聖賢菩薩僧眾。",
        "from": "X74n1500_001:1069c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　悲智俱修稱大士　　上求下化歷僧祇　濟物長乘六度舟　　利他悉到三空岸　內證將臻諸佛境　　隨緣或現比丘形　而今既降道場來　　願使存亡皆離苦一心頂禮十方自恣得道聖賢緣覺僧眾。",
        "from": "X74n1500_001:1069c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　利智不因師匠授　　諦觀緣起悟無生　說法傳燈號部行　　修心無侶稱麟喻　真空頓了看華謝　　煩惱全除聽釧聲　而今既降道場來　　願使存亡皆離苦一心頂禮十方自恣得道聖賢聲聞僧眾。",
        "from": "X74n1500_001:1069c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　山間樹下安居勝　　四諦深觀得有餘　暄喧生死果全傾　　寂寂涅槃心已證　六通自在超魔境　　八解逍遙號福田　而今既降道場來　　願使存亡皆離苦一心頂禮報親入道起教利生目連尊者。",
        "from": "X74n1500_001:1069c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　神通第一居無學　　為報親恩乃出家　自力難除慈母殃　　哀號遂奉如來教　發起微言資後世　　揄揚孝道利羣生　而今既降道場來　　願使存亡皆離苦(讚已互跪。",
        "from": "X74n1500_001:1069c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追想存亡父母。",
        "from": "X74n1500_001:1070a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懇切至誠懺悔)。",
        "from": "X74n1500_001:1070a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懺悔。",
        "from": "X74n1500_001:1070a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等所生父母。",
        "from": "X74n1500_001:1070a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多世親緣。",
        "from": "X74n1500_001:1070a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自背真常。",
        "from": "X74n1500_001:1070a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長流生死。",
        "from": "X74n1500_001:1070a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順無明之倒想。",
        "from": "X74n1500_001:1070a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨欲境以攀緣。",
        "from": "X74n1500_001:1070a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣放六情故為十惡。",
        "from": "X74n1500_001:1070a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪嗔邊見殺盜邪婬。",
        "from": "X74n1500_001:1070a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩舌惡口以欺誣。",
        "from": "X74n1500_001:1070a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綺語妄言而誑惑。",
        "from": "X74n1500_001:1070a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加以恡財荒色酣酒嗜音。",
        "from": "X74n1500_001:1070a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慢辱僧尼輕陵佛法。",
        "from": "X74n1500_001:1070a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飡噉眾生血肉。",
        "from": "X74n1500_001:1070a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傷殘無量合靈。",
        "from": "X74n1500_001:1070a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不思萬劫之殃。",
        "from": "X74n1500_001:1070a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但顧一時之美。",
        "from": "X74n1500_001:1070a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現遭厄難。",
        "from": "X74n1500_001:1070a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或後受沈淪。",
        "from": "X74n1500_001:1070a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忝當割愛出家。",
        "from": "X74n1500_001:1070a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理合修身報德。",
        "from": "X74n1500_001:1070a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸值佛歡喜日僧自恣時。",
        "from": "X74n1500_001:1070a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰遵調御法門。",
        "from": "X74n1500_001:1070a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "式奉盂蘭盆供。",
        "from": "X74n1500_001:1070a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以生緣義重。",
        "from": "X74n1500_001:1070a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀慕情深。",
        "from": "X74n1500_001:1070a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是輙敘瑕疵。",
        "from": "X74n1500_001:1070a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代申懺悔。",
        "from": "X74n1500_001:1070a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仗三寶威神加被。",
        "from": "X74n1500_001:1070a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾僧功行冥熏。",
        "from": "X74n1500_001:1070a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼罪根俱時除滅。",
        "from": "X74n1500_001:1070a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡沒遷神於天上。",
        "from": "X74n1500_001:1070a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永脫冥途。",
        "from": "X74n1500_001:1070a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生存保壽於人間。",
        "from": "X74n1500_001:1070a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常無病惱。",
        "from": "X74n1500_001:1070a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善根彌固。",
        "from": "X74n1500_001:1070a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正信增深。",
        "from": "X74n1500_001:1070a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱出輪迴。",
        "from": "X74n1500_001:1070a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡生安養。",
        "from": "X74n1500_001:1070a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣普覆。",
        "from": "X74n1500_001:1070a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有感遂通。",
        "from": "X74n1500_001:1070a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願賜哀憐。",
        "from": "X74n1500_001:1070a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯垂護念(三徧)。",
        "from": "X74n1500_001:1070a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔已。",
        "from": "X74n1500_001:1070a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命頂禮(此一人唱已。",
        "from": "X74n1500_001:1070a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一禮起繞旋唱云)。",
        "from": "X74n1500_001:1070a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無十方佛南無十方法南無十方僧",
        "from": "X74n1500_001:1070a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無蘭盆教主釋迦文佛南無蘭盆至教修多羅藏南無十方自恣菩薩僧眾南無十方自恣緣覺僧眾南無十方自恣聲聞僧眾南無報親入道目連尊者(旋繞三稱已。",
        "from": "X74n1500_001:1070a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諷盂蘭盆經。",
        "from": "X74n1500_001:1070a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或餘經等。",
        "from": "X74n1500_001:1070a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡誠便散)蘭盆獻供儀紹興甲子季夏比丘宗炬重寫募緣刊板流通。",
        "from": "X74n1500_001:1070a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各為生身父母。",
        "from": "X74n1500_001:1070b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫親緣。",
        "from": "X74n1500_001:1070b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺滌罪根。",
        "from": "X74n1500_001:1070b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴淨土。",
        "from": "X74n1500_001:1070b02_3",
        "context_with_next_sentence": false
    }
]