[
    {
        "source_sentence": "居士傳七",
        "from": "X88n1646_007:0196b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傅大士傳",
        "from": "X88n1646_007:0196b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傅大士者。",
        "from": "X88n1646_007:0196b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名翕。",
        "from": "X88n1646_007:0196b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號善慧。",
        "from": "X88n1646_007:0196b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義烏人也。",
        "from": "X88n1646_007:0196b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊建武四年生於雙林鄉傅宣慈家。",
        "from": "X88n1646_007:0196b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六納劉氏女曰妙光。",
        "from": "X88n1646_007:0196b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生二子曰普建．普成。",
        "from": "X88n1646_007:0196b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會有天竺嵩頭陀訪之曰。",
        "from": "X88n1646_007:0196b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾與汝毗婆尸佛所發誓。",
        "from": "X88n1646_007:0196b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今兜率宮衣鉢見在。",
        "from": "X88n1646_007:0196b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何日當還。",
        "from": "X88n1646_007:0196b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因命臨水觀影。",
        "from": "X88n1646_007:0196b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見圓光寶蓋。",
        "from": "X88n1646_007:0196b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士笑曰。",
        "from": "X88n1646_007:0196b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑪韛之所多鈍鐵。",
        "from": "X88n1646_007:0196b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良醫之門足病人。",
        "from": "X88n1646_007:0196b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度生為急。",
        "from": "X88n1646_007:0196b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何思彼樂乎。",
        "from": "X88n1646_007:0196b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嵩指松山頂曰。",
        "from": "X88n1646_007:0196b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此可棲也。",
        "from": "X88n1646_007:0196b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士躬耕而居之。",
        "from": "X88n1646_007:0196b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人盜菽麥瓜果。",
        "from": "X88n1646_007:0196b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士即與籃籠盛去。",
        "from": "X88n1646_007:0196b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日常營作。",
        "from": "X88n1646_007:0196b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜歸行道。",
        "from": "X88n1646_007:0196b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見釋迦．金粟．定光三如來放光襲其體。",
        "from": "X88n1646_007:0196b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自謂得首楞嚴定。",
        "from": "X88n1646_007:0196b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦行七年欲導群品。",
        "from": "X88n1646_007:0196b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁武帝時遣弟子奉書詣闕曰。",
        "from": "X88n1646_007:0196b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙林樹下當來解脫善慧大士白國主救世菩薩。",
        "from": "X88n1646_007:0196b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "條上中下善希能受持。",
        "from": "X88n1646_007:0196b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其上善略以虗懷為本。",
        "from": "X88n1646_007:0196b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著為宗。",
        "from": "X88n1646_007:0196b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相為因。",
        "from": "X88n1646_007:0196b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃為果。",
        "from": "X88n1646_007:0196c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中善略以治身為本。",
        "from": "X88n1646_007:0196c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治國為宗。",
        "from": "X88n1646_007:0196c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天上人間果報安樂。",
        "from": "X88n1646_007:0196c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其下善略以護養眾生勝殘去殺。",
        "from": "X88n1646_007:0196c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令百姓皆稟六齋。",
        "from": "X88n1646_007:0196c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今聞皇帝崇法欲申論義。",
        "from": "X88n1646_007:0196c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未遂襟懷。",
        "from": "X88n1646_007:0196c03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故遣弟子傅暀告白。",
        "from": "X88n1646_007:0196c04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太樂令何昌以書進。",
        "from": "X88n1646_007:0196c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔遣迎至。",
        "from": "X88n1646_007:0196c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武帝問從來師事何人。",
        "from": "X88n1646_007:0196c05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X88n1646_007:0196c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無所從。",
        "from": "X88n1646_007:0196c05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來無所來。",
        "from": "X88n1646_007:0196c05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師事亦爾。",
        "from": "X88n1646_007:0196c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異日武帝請講金剛經。",
        "from": "X88n1646_007:0196c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士纔陞座。",
        "from": "X88n1646_007:0196c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以尺揮案一下便下座。",
        "from": "X88n1646_007:0196c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝愕然。",
        "from": "X88n1646_007:0196c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士曰。",
        "from": "X88n1646_007:0196c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陛下會不。",
        "from": "X88n1646_007:0196c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰不會。",
        "from": "X88n1646_007:0196c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士曰。",
        "from": "X88n1646_007:0196c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士講經竟。",
        "from": "X88n1646_007:0196c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日講經次。",
        "from": "X88n1646_007:0196c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝至。",
        "from": "X88n1646_007:0196c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾皆起。",
        "from": "X88n1646_007:0196c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士端坐不動。",
        "from": "X88n1646_007:0196c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾報曰。",
        "from": "X88n1646_007:0196c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖駕臨此。",
        "from": "X88n1646_007:0196c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不起。",
        "from": "X88n1646_007:0196c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士曰。",
        "from": "X88n1646_007:0196c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法地若動。",
        "from": "X88n1646_007:0196c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切不安。",
        "from": "X88n1646_007:0196c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋還双林著心王銘云。",
        "from": "X88n1646_007:0196c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀心空王。",
        "from": "X88n1646_007:0196c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元妙難測。",
        "from": "X88n1646_007:0196c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無形無相。",
        "from": "X88n1646_007:0196c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大神力。",
        "from": "X88n1646_007:0196c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅千災。",
        "from": "X88n1646_007:0196c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就萬德。",
        "from": "X88n1646_007:0196c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體性雖空。",
        "from": "X88n1646_007:0196c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能施法則。",
        "from": "X88n1646_007:0196c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀之無形。",
        "from": "X88n1646_007:0196c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼之有聲。",
        "from": "X88n1646_007:0196c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為大法將。",
        "from": "X88n1646_007:0196c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心戒傳經。",
        "from": "X88n1646_007:0196c12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水中鹽味。",
        "from": "X88n1646_007:0196c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色裏膠青。",
        "from": "X88n1646_007:0196c13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定是有。",
        "from": "X88n1646_007:0196c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見其形。",
        "from": "X88n1646_007:0196c13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心王亦爾。",
        "from": "X88n1646_007:0196c13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身內居停。",
        "from": "X88n1646_007:0196c14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面門出入。",
        "from": "X88n1646_007:0196c14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應物隨情。",
        "from": "X88n1646_007:0196c14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在無礙。",
        "from": "X88n1646_007:0196c14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作皆成。",
        "from": "X88n1646_007:0196c14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了本識心。",
        "from": "X88n1646_007:0196c15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識心見佛。",
        "from": "X88n1646_007:0196c15_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心是佛。",
        "from": "X88n1646_007:0196c15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛是心。",
        "from": "X88n1646_007:0196c15_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念佛心。",
        "from": "X88n1646_007:0196c15_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛心念佛。",
        "from": "X88n1646_007:0196c16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得早成。",
        "from": "X88n1646_007:0196c16_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒心自律。",
        "from": "X88n1646_007:0196c16_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨律淨心。",
        "from": "X88n1646_007:0196c16_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心即是佛。",
        "from": "X88n1646_007:0196c16_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除此心王。",
        "from": "X88n1646_007:0196c17_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無別佛。",
        "from": "X88n1646_007:0196c17_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求成佛。",
        "from": "X88n1646_007:0196c17_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫染一物。",
        "from": "X88n1646_007:0196c17_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心性雖空。",
        "from": "X88n1646_007:0196c17_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪嗔體實。",
        "from": "X88n1646_007:0196c18_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入此法門。",
        "from": "X88n1646_007:0196c18_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐成佛。",
        "from": "X88n1646_007:0196c18_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到彼岸已。",
        "from": "X88n1646_007:0196c18_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得波羅蜜。",
        "from": "X88n1646_007:0196c18_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慕道真士。",
        "from": "X88n1646_007:0196c19_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自觀自心。",
        "from": "X88n1646_007:0196c19_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知佛在內。",
        "from": "X88n1646_007:0196c19_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不向外尋。",
        "from": "X88n1646_007:0196c19_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即心即佛。",
        "from": "X88n1646_007:0196c19_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即佛即心。",
        "from": "X88n1646_007:0196c20_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心明識佛。",
        "from": "X88n1646_007:0196c20_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曉了識心。",
        "from": "X88n1646_007:0196c20_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離心非佛。",
        "from": "X88n1646_007:0196c20_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離佛非心。",
        "from": "X88n1646_007:0196c20_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非佛莫測。",
        "from": "X88n1646_007:0196c21_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所堪任。",
        "from": "X88n1646_007:0196c21_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執空滯寂。",
        "from": "X88n1646_007:0196c21_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此漂沉。",
        "from": "X88n1646_007:0196c21_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩。",
        "from": "X88n1646_007:0196c21_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非此安心。",
        "from": "X88n1646_007:0196c22_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明心大士。",
        "from": "X88n1646_007:0196c22_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟此元音。",
        "from": "X88n1646_007:0196c22_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心性妙。",
        "from": "X88n1646_007:0196c22_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用無更改。",
        "from": "X88n1646_007:0196c22_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故智者。",
        "from": "X88n1646_007:0196c23_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放心自在。",
        "from": "X88n1646_007:0196c23_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫言心王。",
        "from": "X88n1646_007:0196c23_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空無體性。",
        "from": "X88n1646_007:0196c23_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使色身。",
        "from": "X88n1646_007:0196c23_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作邪作正。",
        "from": "X88n1646_007:0196c24_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非有非無。",
        "from": "X88n1646_007:0196c24_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱顯不定。",
        "from": "X88n1646_007:0196c24_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心性離空。",
        "from": "X88n1646_007:0196c24_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能凡能聖。",
        "from": "X88n1646_007:0196c24_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故相勸。",
        "from": "X88n1646_007:0197a01_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好自防慎。",
        "from": "X88n1646_007:0197a01_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那造作。",
        "from": "X88n1646_007:0197a01_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還復漂沈。",
        "from": "X88n1646_007:0197a01_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨心智。",
        "from": "X88n1646_007:0197a01_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世黃金。",
        "from": "X88n1646_007:0197a02_90",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若法藏。",
        "from": "X88n1646_007:0197a02_91",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並在身心。",
        "from": "X88n1646_007:0197a02_92",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無為法寶。",
        "from": "X88n1646_007:0197a02_93",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非淺非深。",
        "from": "X88n1646_007:0197a02_94",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩。",
        "from": "X88n1646_007:0197a03_95",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了此本心。",
        "from": "X88n1646_007:0197a03_96",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有緣遇者。",
        "from": "X88n1646_007:0197a03_97",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非去來今。",
        "from": "X88n1646_007:0197a03_98",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有偈曰。",
        "from": "X88n1646_007:0197a03_99",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜夜抱佛眠。",
        "from": "X88n1646_007:0197a04_100",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝朝還共起。",
        "from": "X88n1646_007:0197a04_101",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起坐鎮相隨。",
        "from": "X88n1646_007:0197a04_102",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語嘿同居止。",
        "from": "X88n1646_007:0197a04_103",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纖毫不相離。",
        "from": "X88n1646_007:0197a05_104",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如身影相似。",
        "from": "X88n1646_007:0197a05_105",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲識佛去處。",
        "from": "X88n1646_007:0197a05_106",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇這語聲是。",
        "from": "X88n1646_007:0197a05_107",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_007:0197a06_108",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有物先天地。",
        "from": "X88n1646_007:0197a06_109",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無形本寂寥。",
        "from": "X88n1646_007:0197a06_110",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為萬象主。",
        "from": "X88n1646_007:0197a06_111",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不逐四時凋。",
        "from": "X88n1646_007:0197a06_112",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_007:0197a07_113",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空手把鋤頭。",
        "from": "X88n1646_007:0197a07_114",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步行騎水牛。",
        "from": "X88n1646_007:0197a07_115",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人從橋上過。",
        "from": "X88n1646_007:0197a07_116",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橋流水不流。",
        "from": "X88n1646_007:0197a08_117",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太建元年嵩頭陀先於柯山靈巖寺入滅。",
        "from": "X88n1646_007:0197a08_118",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士曰。",
        "from": "X88n1646_007:0197a09_119",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嵩公兜率待我。",
        "from": "X88n1646_007:0197a09_120",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可留也。",
        "from": "X88n1646_007:0197a09_121",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四月二十四日示眾曰。",
        "from": "X88n1646_007:0197a09_122",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此身眾苦所集。",
        "from": "X88n1646_007:0197a10_123",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚可厭惡。",
        "from": "X88n1646_007:0197a10_124",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須慎三業。",
        "from": "X88n1646_007:0197a10_125",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精修六度。",
        "from": "X88n1646_007:0197a10_126",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若墜地獄。",
        "from": "X88n1646_007:0197a11_127",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒難得出。",
        "from": "X88n1646_007:0197a11_128",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子曰。",
        "from": "X88n1646_007:0197a11_129",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師之發迹可得聞乎。",
        "from": "X88n1646_007:0197a11_130",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X88n1646_007:0197a12_131",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從第四天來。",
        "from": "X88n1646_007:0197a12_132",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為度汝等。",
        "from": "X88n1646_007:0197a12_133",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次補釋迦。",
        "from": "X88n1646_007:0197a12_134",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大品云。",
        "from": "X88n1646_007:0197a12_135",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有菩薩從兜率天來。",
        "from": "X88n1646_007:0197a12_136",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根猛利。",
        "from": "X88n1646_007:0197a13_137",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾與般若相應。",
        "from": "X88n1646_007:0197a13_138",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即吾身是也。",
        "from": "X88n1646_007:0197a13_139",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖趺坐而終。",
        "from": "X88n1646_007:0197a14_140",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年七十三(五燈會元．佛祖通載)。",
        "from": "X88n1646_007:0197a14_141",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_007:0197a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初祖入梁。",
        "from": "X88n1646_007:0197a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機不契。",
        "from": "X88n1646_007:0197a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去而之少林。",
        "from": "X88n1646_007:0197a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人以此為梁武惜。",
        "from": "X88n1646_007:0197a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然當時如寶誌公．傅大士並傳佛心印。",
        "from": "X88n1646_007:0197a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闡大乘法。",
        "from": "X88n1646_007:0197a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徘徊於梁。",
        "from": "X88n1646_007:0197a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而梁武執著福罪因緣。",
        "from": "X88n1646_007:0197a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪圖小果。",
        "from": "X88n1646_007:0197a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醉有為佛事。",
        "from": "X88n1646_007:0197a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈湎不醒。",
        "from": "X88n1646_007:0197a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一微戞漢遮葢本真。",
        "from": "X88n1646_007:0197a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皎日當空覆盆絕照。",
        "from": "X88n1646_007:0197a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不哀哉。",
        "from": "X88n1646_007:0197a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩深慈。",
        "from": "X88n1646_007:0197a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生迷倒。",
        "from": "X88n1646_007:0197a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大士傳可觀焉。",
        "from": "X88n1646_007:0197a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_007:0197a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自家屋裏人。",
        "from": "X88n1646_007:0197a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說自家屋裏話。",
        "from": "X88n1646_007:0197a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀之通身毛孔皆笑。",
        "from": "X88n1646_007:0197a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱子於大士偈盖甞有取焉。",
        "from": "X88n1646_007:0197a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予安得遊朱子之門。",
        "from": "X88n1646_007:0197a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日夕饜飫家常話乎○五宗興而說法如雷。",
        "from": "X88n1646_007:0197a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連那即心即佛。",
        "from": "X88n1646_007:0197a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "送他一拳。",
        "from": "X88n1646_007:0197a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連那萬象主。",
        "from": "X88n1646_007:0197a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與他一脚。",
        "from": "X88n1646_007:0197a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傅大士竟成老婆禪去矣。",
        "from": "X88n1646_007:0197b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門外漢試猜看。",
        "from": "X88n1646_007:0197b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢",
        "from": "X88n1646_007:0197b01_13",
        "context_with_next_sentence": false
    }
]