[
    {
        "source_sentence": "居士傳十八",
        "from": "X88n1646_018:0215a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王敬初陳操甘行者張秀才傳",
        "from": "X88n1646_018:0215a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王敬初襄州人。",
        "from": "X88n1646_018:0215b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初見睦州陳尊宿。",
        "from": "X88n1646_018:0215b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊宿曰。",
        "from": "X88n1646_018:0215b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日何故入院遲。",
        "from": "X88n1646_018:0215b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初曰。",
        "from": "X88n1646_018:0215b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "看打毬來。",
        "from": "X88n1646_018:0215b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊宿曰。",
        "from": "X88n1646_018:0215b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人打毬。",
        "from": "X88n1646_018:0215b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬打毬。",
        "from": "X88n1646_018:0215b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰人打毬。",
        "from": "X88n1646_018:0215b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰人困麼。",
        "from": "X88n1646_018:0215b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰困。",
        "from": "X88n1646_018:0215b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰露柱困麼。",
        "from": "X88n1646_018:0215b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初惘然。",
        "from": "X88n1646_018:0215b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸至私第。",
        "from": "X88n1646_018:0215b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中夜忽然有省。",
        "from": "X88n1646_018:0215b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日見尊宿以告。",
        "from": "X88n1646_018:0215b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊宿曰。",
        "from": "X88n1646_018:0215b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露柱困麼。",
        "from": "X88n1646_018:0215b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰困。",
        "from": "X88n1646_018:0215b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷官至常侍視事。",
        "from": "X88n1646_018:0215b05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次米和尚至。",
        "from": "X88n1646_018:0215b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初舉筆示之。",
        "from": "X88n1646_018:0215b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "米曰還判得虗空否。",
        "from": "X88n1646_018:0215b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初擲筆入宅。",
        "from": "X88n1646_018:0215b06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不復出。",
        "from": "X88n1646_018:0215b06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "米疑之。",
        "from": "X88n1646_018:0215b07_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日屬鼓山供養主探其意。",
        "from": "X88n1646_018:0215b07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "米亦隨至。",
        "from": "X88n1646_018:0215b07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匿於屏間。",
        "from": "X88n1646_018:0215b07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養主問曰。",
        "from": "X88n1646_018:0215b08_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昨日米和尚有何言句便不相見。",
        "from": "X88n1646_018:0215b08_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X88n1646_018:0215b09_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獅子咬人。",
        "from": "X88n1646_018:0215b09_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韓盧逐塊。",
        "from": "X88n1646_018:0215b09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "米聞即省前過。",
        "from": "X88n1646_018:0215b09_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽出笑曰我會也。",
        "from": "X88n1646_018:0215b09_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初曰試道看。",
        "from": "X88n1646_018:0215b10_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "米曰請常侍舉。",
        "from": "X88n1646_018:0215b10_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初豎起一箸。",
        "from": "X88n1646_018:0215b10_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "米曰這野狐精。",
        "from": "X88n1646_018:0215b11_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初曰這漢徹也。",
        "from": "X88n1646_018:0215b11_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日問僧。",
        "from": "X88n1646_018:0215b11_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生還有佛性也無。",
        "from": "X88n1646_018:0215b11_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧曰無。",
        "from": "X88n1646_018:0215b12_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初指壁上畫狗曰這箇還有也無。",
        "from": "X88n1646_018:0215b12_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧不對。",
        "from": "X88n1646_018:0215b13_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初代答曰看齩著汝。",
        "from": "X88n1646_018:0215b13_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又甞與臨濟到僧堂問曰。",
        "from": "X88n1646_018:0215b13_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這一堂僧還看經麼。",
        "from": "X88n1646_018:0215b14_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨濟曰不看經。",
        "from": "X88n1646_018:0215b14_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰還習禪麼。",
        "from": "X88n1646_018:0215b15_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰不習禪。",
        "from": "X88n1646_018:0215b15_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初曰。",
        "from": "X88n1646_018:0215b15_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既不看經又不習禪。",
        "from": "X88n1646_018:0215b15_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟作個甚麼。",
        "from": "X88n1646_018:0215b16_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰總教伊成佛作祖去。",
        "from": "X88n1646_018:0215b16_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬初曰。",
        "from": "X88n1646_018:0215b16_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金屑雖貴。",
        "from": "X88n1646_018:0215b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "落眼成翳。",
        "from": "X88n1646_018:0215b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨濟曰。",
        "from": "X88n1646_018:0215b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將謂你是俗漢。",
        "from": "X88n1646_018:0215b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後嗣法溈山祐公(五燈會元．先覺宗乘)。",
        "from": "X88n1646_018:0215b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳操不詳其里居。",
        "from": "X88n1646_018:0215b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為睦州刺史。",
        "from": "X88n1646_018:0215b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參陳尊宿。",
        "from": "X88n1646_018:0215b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日尊宿看金剛經。",
        "from": "X88n1646_018:0215b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操問曰。",
        "from": "X88n1646_018:0215b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六朝翻譯。",
        "from": "X88n1646_018:0215b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此當第幾譯。",
        "from": "X88n1646_018:0215b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊宿舉經起云。",
        "from": "X88n1646_018:0215b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有為法。",
        "from": "X88n1646_018:0215b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如夢幻泡影。",
        "from": "X88n1646_018:0215b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有省。",
        "from": "X88n1646_018:0215b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂嗣法焉。",
        "from": "X88n1646_018:0215b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後官至尚書。",
        "from": "X88n1646_018:0215b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋僧次。",
        "from": "X88n1646_018:0215b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈胡餅問僧。",
        "from": "X88n1646_018:0215b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江西湖南還有這個麼。",
        "from": "X88n1646_018:0215b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧曰尚書適來喫箇甚麼。",
        "from": "X88n1646_018:0215b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操曰敲鐘謝響。",
        "from": "X88n1646_018:0215b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後躬自行餅。",
        "from": "X88n1646_018:0215b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一僧展手擬接。",
        "from": "X88n1646_018:0215b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操却縮手。",
        "from": "X88n1646_018:0215b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧無語。",
        "from": "X88n1646_018:0215b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操曰果然。",
        "from": "X88n1646_018:0215b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞訪資福和尚。",
        "from": "X88n1646_018:0215b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚見操便畫一圓相。",
        "from": "X88n1646_018:0215c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操曰弟子與麼來早是不著便。",
        "from": "X88n1646_018:0215c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更畫一圓相。",
        "from": "X88n1646_018:0215c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚於中著一點。",
        "from": "X88n1646_018:0215c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "操曰將謂是南番舶主。",
        "from": "X88n1646_018:0215c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚便歸方丈閉却門(五燈會元．先覺宗乘)。",
        "from": "X88n1646_018:0215c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘行者名贄。",
        "from": "X88n1646_018:0215c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池州人。",
        "from": "X88n1646_018:0215c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗣法南泉願禪師。",
        "from": "X88n1646_018:0215c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日入南泉設齋。",
        "from": "X88n1646_018:0215c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃蘗運為首座。",
        "from": "X88n1646_018:0215c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者請施財。",
        "from": "X88n1646_018:0215c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰財法二施等無差別。",
        "from": "X88n1646_018:0215c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者曰甚麼道爭消得贄嚫。",
        "from": "X88n1646_018:0215c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便將出去。",
        "from": "X88n1646_018:0215c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾復入曰請施財。",
        "from": "X88n1646_018:0215c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃蘗曰。",
        "from": "X88n1646_018:0215c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財法二施等無差別。",
        "from": "X88n1646_018:0215c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃嚫。",
        "from": "X88n1646_018:0215c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者甞接待往來。",
        "from": "X88n1646_018:0215c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有僧問曰行者接待不易。",
        "from": "X88n1646_018:0215c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者曰譬如餧驢餧馬。",
        "from": "X88n1646_018:0215c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥山令供養主行乞至行者家。",
        "from": "X88n1646_018:0215c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者問從何來。",
        "from": "X88n1646_018:0215c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰藥山。",
        "from": "X88n1646_018:0215c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者曰來作麼。",
        "from": "X88n1646_018:0215c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰教化行者。",
        "from": "X88n1646_018:0215c10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰將得藥來麼。",
        "from": "X88n1646_018:0215c10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰行者有甚麼病。",
        "from": "X88n1646_018:0215c11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者便捨銀兩錠。",
        "from": "X88n1646_018:0215c11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸舉呈。",
        "from": "X88n1646_018:0215c11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥山曰。",
        "from": "X88n1646_018:0215c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速還之。",
        "from": "X88n1646_018:0215c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子著賊了也。",
        "from": "X88n1646_018:0215c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主即送還。",
        "from": "X88n1646_018:0215c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者曰。",
        "from": "X88n1646_018:0215c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼中有人。",
        "from": "X88n1646_018:0215c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加銀施之。",
        "from": "X88n1646_018:0215c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巖頭奯禪師甞舍行者家度夏。",
        "from": "X88n1646_018:0215c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "補衣次。",
        "from": "X88n1646_018:0215c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者趨過。",
        "from": "X88n1646_018:0215c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巖頭以針作劄勢。",
        "from": "X88n1646_018:0215c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者整衣謝。",
        "from": "X88n1646_018:0215c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻問云作麼。",
        "from": "X88n1646_018:0215c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者曰說不得。",
        "from": "X88n1646_018:0215c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻曰也要大家知。",
        "from": "X88n1646_018:0215c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃舉前話。",
        "from": "X88n1646_018:0215c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻頓悟乃云。",
        "from": "X88n1646_018:0215c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此去三十年後。",
        "from": "X88n1646_018:0215c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知一回飲水一回咽。",
        "from": "X88n1646_018:0215c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其女子聞之亦悟曰。",
        "from": "X88n1646_018:0215c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰知盡大地人性命被奯上座劄將去也(五燈會元．先覺宗乘)。",
        "from": "X88n1646_018:0215c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張秀才名拙。",
        "from": "X88n1646_018:0215c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁石霜諸公。",
        "from": "X88n1646_018:0215c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石霜問秀才何名。",
        "from": "X88n1646_018:0215c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰名拙。",
        "from": "X88n1646_018:0215c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石霜曰。",
        "from": "X88n1646_018:0215c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覓巧尚不可得。",
        "from": "X88n1646_018:0215c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拙自何來。",
        "from": "X88n1646_018:0215c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張忽有省。",
        "from": "X88n1646_018:0215c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呈偈曰。",
        "from": "X88n1646_018:0215c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明寂照徧河沙。",
        "from": "X88n1646_018:0215c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡聖含靈共我家。",
        "from": "X88n1646_018:0215c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念不生全體現。",
        "from": "X88n1646_018:0215c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根纔動被雲遮。",
        "from": "X88n1646_018:0215c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除煩惱重增病。",
        "from": "X88n1646_018:0215c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趨向真如亦是邪。",
        "from": "X88n1646_018:0215c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順世緣無罣礙。",
        "from": "X88n1646_018:0215c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃生死等空華(五燈會元)。",
        "from": "X88n1646_018:0215c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_018:0215c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自曹溪之化行。",
        "from": "X88n1646_018:0215c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而居士之究心祖道者多矣。",
        "from": "X88n1646_018:0215c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予閱傳燈諸錄。",
        "from": "X88n1646_018:0216a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錄諸子問答機緣如此。",
        "from": "X88n1646_018:0216a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其他行事",
        "from": "X88n1646_018:0216a01_5",
        "context_with_next_sentence": false
    }
]