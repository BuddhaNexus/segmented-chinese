[
    {
        "source_sentence": "菩提行經卷第二",
        "from": "T32n1662_002:0547b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖龍樹菩薩集頌",
        "from": "T32n1662_002:0547b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度惹爛駄囉國密林",
        "from": "T32n1662_002:0547b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺三藏明教大師賜紫沙門",
        "from": "T32n1662_002:0547b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣天息災奉　詔譯",
        "from": "T32n1662_002:0547b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心忍辱波羅蜜多品第四",
        "from": "T32n1662_002:0547b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　奉行諸善業　　施戒而先導",
        "from": "T32n1662_002:0547b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　供養於如來　　百千劫無盡",
        "from": "T32n1662_002:0547b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　修行於羼提　　嗔罪而不立",
        "from": "T32n1662_002:0547b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　觀種種體空　　是故一心忍",
        "from": "T32n1662_002:0547b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不得貪快樂　　守意令平等",
        "from": "T32n1662_002:0547c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　心有嗔惱病　　無睡恒不足",
        "from": "T32n1662_002:0547c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼此有施主　　供給於利養",
        "from": "T32n1662_002:0547c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨彼愛重心　　無得生瞋惱",
        "from": "T32n1662_002:0547c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　凡諸親近事　　不起於憎嫌",
        "from": "T32n1662_002:0547c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於彼無所瞋　　乃得其安樂",
        "from": "T32n1662_002:0547c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　忍如是等事　　若對於冤家",
        "from": "T32n1662_002:0547c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於瞋若能除　　世世獲安樂",
        "from": "T32n1662_002:0547c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　冤若生於心　　於愛亦無喜",
        "from": "T32n1662_002:0547c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若飱瞋惱食　　無忍善不壞",
        "from": "T32n1662_002:0547c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼食我大冤　　於我無善利",
        "from": "T32n1662_002:0547c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　知彼冤不食　　是故忍堅牢",
        "from": "T32n1662_002:0547c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　凡見冤來去　　歡喜而不瞋",
        "from": "T32n1662_002:0547c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於冤若起瞋　　善利終滅盡",
        "from": "T32n1662_002:0547c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　忍心常若此　　令瞋不得起",
        "from": "T32n1662_002:0547c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　住忍無時節　　瞋冤自不生",
        "from": "T32n1662_002:0547c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人自保愛　　不作惡口業",
        "from": "T32n1662_002:0547c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　口業若不離　　後感冤家苦",
        "from": "T32n1662_002:0547c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　畏苦不出離　　不行眾苦因",
        "from": "T32n1662_002:0547c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是故堅忍心　　獲得諸快樂",
        "from": "T32n1662_002:0547c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼訥陵誐子　　邪見求解脫",
        "from": "T32n1662_002:0547c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　刀割火燒身　　無利由能忍",
        "from": "T32n1662_002:0547c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愚癡無正見　　虛受大苦惱",
        "from": "T32n1662_002:0547c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我以菩提心　　云何苦不忍",
        "from": "T32n1662_002:0547c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　蚊蚤壁虱等　　常飢渴苦惱",
        "from": "T32n1662_002:0547c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大痒煩苦人　　住忍而不見",
        "from": "T32n1662_002:0547c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寒熱并雨風　　病枷鎖捶打",
        "from": "T32n1662_002:0547c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　被諸苦惱事　　忍不求快樂",
        "from": "T32n1662_002:0547c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　殺他血流迸　　堅牢心勇猛",
        "from": "T32n1662_002:0547c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　割身自見血　　怕怖而驚倒",
        "from": "T32n1662_002:0548a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智者心清淨　　常懼瞋惱侵",
        "from": "T32n1662_002:0548a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　與煩惱相持　　忍心恒勇猛",
        "from": "T32n1662_002:0548a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　蛇腹行在地　　喻瞋伏於心",
        "from": "T32n1662_002:0548a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　殺之謂無勇　　殺彼得最勝",
        "from": "T32n1662_002:0548a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來大悲者　　愍苦說輪迴",
        "from": "T32n1662_002:0548a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　使識罪根本　　住忍而不作",
        "from": "T32n1662_002:0548a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　父母何計心　　懼子遭淪溺",
        "from": "T32n1662_002:0548a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　持心離瞋怒　　自遠大苦報",
        "from": "T32n1662_002:0548a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如無智人　　令罪而得生",
        "from": "T32n1662_002:0548a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　修行而無智　　瞋生亦復爾",
        "from": "T32n1662_002:0548a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲住不思議　　當須持自心",
        "from": "T32n1662_002:0548a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於此生愛重　　令瞋不生起",
        "from": "T32n1662_002:0548a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若貪彼塵境　　而生種種罪",
        "from": "T32n1662_002:0548a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　因彼諸業力　　而不得自由",
        "from": "T32n1662_002:0548a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於境若不貪　　彼集無因立",
        "from": "T32n1662_002:0548a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　和合心無故　　是故無有生",
        "from": "T32n1662_002:0548a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不貪而不生　　無得而自說",
        "from": "T32n1662_002:0548a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我得如是故　　是生不思議",
        "from": "T32n1662_002:0548a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼無生不生　　是得云何有",
        "from": "T32n1662_002:0548a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　瞻察於彼此　　滅盡得無餘",
        "from": "T32n1662_002:0548a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此心恒清淨　　喻隨色摩尼",
        "from": "T32n1662_002:0548a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所變悉從因　　無因相何有",
        "from": "T32n1662_002:0548a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　過去行行時　　彼行何所作",
        "from": "T32n1662_002:0548a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨彼所行因　　等因而感果",
        "from": "T32n1662_002:0548a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切雖由因　　因善惡由心",
        "from": "T32n1662_002:0548a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　說求性寂靜　　如是有何過",
        "from": "T32n1662_002:0548a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若取和合因　　是樂於苦惱",
        "from": "T32n1662_002:0548a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此心不可住　　智人應自勸",
        "from": "T32n1662_002:0548a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是故見冤家　　想作善知識",
        "from": "T32n1662_002:0548b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　因行如是行　　當獲得快樂",
        "from": "T32n1662_002:0548b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是諸有情　　由業不自在",
        "from": "T32n1662_002:0548b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自在若成就　　誰肯趣於苦",
        "from": "T32n1662_002:0548b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　散亂心緣塵　　心被刺不覺",
        "from": "T32n1662_002:0548b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　食斷食增瞋　　於苦而返愛",
        "from": "T32n1662_002:0548b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自若無福行　　返愛纏縛業",
        "from": "T32n1662_002:0548b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如飱毒藥食　　墮於生死崖",
        "from": "T32n1662_002:0548b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自住是煩惱　　誠由不自護",
        "from": "T32n1662_002:0548b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲解脫他人　　此事何由得",
        "from": "T32n1662_002:0548b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　煩惱迷昏濁　　而致於自殺",
        "from": "T32n1662_002:0548b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　毒盛無有悲　　云何瞋不護",
        "from": "T32n1662_002:0548b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自性既愚迷　　於他行嬈亂",
        "from": "T32n1662_002:0548b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生彼瞋無疑　　如火而能燒",
        "from": "T32n1662_002:0548b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　有情性愚時　　所行諸過失",
        "from": "T32n1662_002:0548b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愚迷故若此　　如煙熏虛空",
        "from": "T32n1662_002:0548b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人瞋不護　　愚迷無智故",
        "from": "T32n1662_002:0548b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　喻持杖勸人　　而增彼瞋惱",
        "from": "T32n1662_002:0548b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我於過去生　　苦惱諸有情",
        "from": "T32n1662_002:0548b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是故於今身　　被苦惱能忍",
        "from": "T32n1662_002:0548b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我身喻於鐵　　受彼燒鎚鍛",
        "from": "T32n1662_002:0548b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如彼鐵持身　　何得有其苦",
        "from": "T32n1662_002:0548b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我今看此身　　如無情形像",
        "from": "T32n1662_002:0548b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　雖被諸苦惱　　而瞋無所起",
        "from": "T32n1662_002:0548b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愚迷起愛業　　不知其苦本",
        "from": "T32n1662_002:0548b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得苦緣自過　　云何生瞋惱",
        "from": "T32n1662_002:0548b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　喻受地獄苦　　飛禽劍林等",
        "from": "T32n1662_002:0548b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　知自業所生　　何處有瞋惱",
        "from": "T32n1662_002:0548b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我得如是業　　此過知所起",
        "from": "T32n1662_002:0548b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　設令入地獄　　不由他所作",
        "from": "T32n1662_002:0548c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲盡我之業　　無量無有邊",
        "from": "T32n1662_002:0548c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我業既如是　　長時受地獄",
        "from": "T32n1662_002:0548c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我此過如是　　彼實我冤家",
        "from": "T32n1662_002:0548c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　云何分別知　　愚迷瞋造作",
        "from": "T32n1662_002:0548c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人自護持　　對冤忍不恚",
        "from": "T32n1662_002:0548c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是心功德生　　地獄云何入",
        "from": "T32n1662_002:0548c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　盡我之所行　　得因如彼時",
        "from": "T32n1662_002:0548c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不忍瞋不護　　破壞於修行",
        "from": "T32n1662_002:0548c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　意無相無形　　散亂即破壞",
        "from": "T32n1662_002:0548c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　由身護持故　　身苦當忍受",
        "from": "T32n1662_002:0548c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我於口惡業　　眾過而不作",
        "from": "T32n1662_002:0548c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身不被眾苦　　云何心有瞋",
        "from": "T32n1662_002:0548c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我於今生中　　淨心行利行",
        "from": "T32n1662_002:0548c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於利益既無　　何事於食飲",
        "from": "T32n1662_002:0548c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　凡所作為事　　要在於利他",
        "from": "T32n1662_002:0548c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼無利非愛　　定獲罪無疑",
        "from": "T32n1662_002:0548c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不如今殞沒　　無貪邪壽命",
        "from": "T32n1662_002:0548c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　邪命住雖久　　死當墮苦趣",
        "from": "T32n1662_002:0548c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如在夢中　　百年受快樂",
        "from": "T32n1662_002:0548c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如真實得樂　　覺已知暫非",
        "from": "T32n1662_002:0548c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　喻彼時無常　　壽命之延促",
        "from": "T32n1662_002:0548c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　覺此二事已　　彼何得快樂",
        "from": "T32n1662_002:0548c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　久處於歡娛　　自謂得多益",
        "from": "T32n1662_002:0548c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如行人被劫　　裸形復空手",
        "from": "T32n1662_002:0548c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　福利隨過減　　罪根還復生",
        "from": "T32n1662_002:0548c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　福盡罪不生　　為獲不瞋利",
        "from": "T32n1662_002:0548c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼何為活命　　一向作不善",
        "from": "T32n1662_002:0548c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是不思惟　　無善不破壞",
        "from": "T32n1662_002:0548c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無得讚於瞋　　破壞有情故",
        "from": "T32n1662_002:0549a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是心利他　　彼瞋無由生",
        "from": "T32n1662_002:0549a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為彼修心人　　於忍不住故",
        "from": "T32n1662_002:0549a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見彼煩惱生　　是讚忍功德",
        "from": "T32n1662_002:0549a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　塔像妙法等　　有謗及破壞",
        "from": "T32n1662_002:0549a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛等無苦惱　　我於彼不瞋",
        "from": "T32n1662_002:0549a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於師并眷屬　　不作於愛業",
        "from": "T32n1662_002:0549a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　今因過去生　　見之而自勉",
        "from": "T32n1662_002:0549a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　覺心觀有情　　恒在眾苦惱",
        "from": "T32n1662_002:0549a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見彼如是已　　於苦惱能忍",
        "from": "T32n1662_002:0549a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　瞋恚與愚癡　　分別過一等",
        "from": "T32n1662_002:0549a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於此毒過咎　　何得說無過",
        "from": "T32n1662_002:0549a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　云何於過去　　而作害他業",
        "from": "T32n1662_002:0549a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是諸業因　　間斷此何作",
        "from": "T32n1662_002:0549a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如佛福亦然　　我今一心作",
        "from": "T32n1662_002:0549a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　與一切有情　　慈心互相覩",
        "from": "T32n1662_002:0549a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　喻火燒其舍　　舍中而火入",
        "from": "T32n1662_002:0549a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　舍中若有草　　彼火自延蔓",
        "from": "T32n1662_002:0549a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是還喻心　　和合於瞋火",
        "from": "T32n1662_002:0549a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　燒彼福功德　　剎那無所有",
        "from": "T32n1662_002:0549a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人殺在手　　放之善可稱",
        "from": "T32n1662_002:0549a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　地獄苦能免　　此善誰不讚",
        "from": "T32n1662_002:0549a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人在世間　　少苦不能忍",
        "from": "T32n1662_002:0549a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　地獄苦無量　　瞋因何不斷",
        "from": "T32n1662_002:0549a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我以如是苦　　歷百千地獄",
        "from": "T32n1662_002:0549a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一一為利他　　所作不自為",
        "from": "T32n1662_002:0549a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我無如是等　　諸大苦惱事",
        "from": "T32n1662_002:0549a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以離世間故　　為利如是行",
        "from": "T32n1662_002:0549a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　離苦獲快樂　　彼皆讚功德",
        "from": "T32n1662_002:0549a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得彼如是讚　　云何而不喜",
        "from": "T32n1662_002:0549b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼既得如此　　無礙之快樂",
        "from": "T32n1662_002:0549b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　利他行最上　　智者何不勉",
        "from": "T32n1662_002:0549b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是最上行　　得快樂不修",
        "from": "T32n1662_002:0549b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此見若不捨　　破壞於正見",
        "from": "T32n1662_002:0549b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若敬愛於他　　以德而稱讚",
        "from": "T32n1662_002:0549b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　他德既稱讚　　乃是自敬愛",
        "from": "T32n1662_002:0549b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當發菩提心　　為一切有情",
        "from": "T32n1662_002:0549b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　令得諸快樂　　云何瞋有情",
        "from": "T32n1662_002:0549b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛為三界供　　欲有情成佛",
        "from": "T32n1662_002:0549b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世利得不實　　彼煩惱何作",
        "from": "T32n1662_002:0549b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人之骨肉　　乃及諸眷屬",
        "from": "T32n1662_002:0549b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　養育與命等　　不喜瞋何生",
        "from": "T32n1662_002:0549b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如彼求菩提　　當用菩提心",
        "from": "T32n1662_002:0549b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　而不愛有情　　福自捨何瞋",
        "from": "T32n1662_002:0549b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人有所求　　出財大捨施",
        "from": "T32n1662_002:0549b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所求既不獲　　不如財在舍",
        "from": "T32n1662_002:0549b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　清淨功德福　　何障而不獲",
        "from": "T32n1662_002:0549b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得已自不受　　如住瞋修行",
        "from": "T32n1662_002:0549b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　作罪與作福　　不同不隨喜",
        "from": "T32n1662_002:0549b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦復不依作　　當自一無得",
        "from": "T32n1662_002:0549b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若愛於冤家　　欲求其歡喜",
        "from": "T32n1662_002:0549b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　復求諸讚說　　此事無因得",
        "from": "T32n1662_002:0549b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　雖欲利圓滿　　返苦而無樂",
        "from": "T32n1662_002:0549b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　菩提心不忍　　於利不成就",
        "from": "T32n1662_002:0549b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　煩惱之惡鉤　　牽人不自在",
        "from": "T32n1662_002:0549b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　由如地獄卒　　擲人入湯火",
        "from": "T32n1662_002:0549b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我本求利他　　何要虛稱讚",
        "from": "T32n1662_002:0549b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無福無壽命　　無力無安樂",
        "from": "T32n1662_002:0549b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自利行不圓　　智者應須覺",
        "from": "T32n1662_002:0549c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後後而自行　　當愛樂圓滿",
        "from": "T32n1662_002:0549c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　修行要稱讚　　若持刃自殺",
        "from": "T32n1662_002:0549c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如世不實事　　無益無利樂",
        "from": "T32n1662_002:0549c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　譬如破壞舍　　日照內外見",
        "from": "T32n1662_002:0549c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦由稱讚非　　須用心明了",
        "from": "T32n1662_002:0549c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　汝思惟於聲　　起滅而平等",
        "from": "T32n1662_002:0549c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　心如此利他　　當行如是行",
        "from": "T32n1662_002:0549c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於他何所受　　而行於利益",
        "from": "T32n1662_002:0549c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼既獲快樂　　我利益非虛",
        "from": "T32n1662_002:0549c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼彼獲利樂　　以一切讚我",
        "from": "T32n1662_002:0549c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　云何而於我　　無別威德樂",
        "from": "T32n1662_002:0549c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼如是讚我　　以愛彼自得",
        "from": "T32n1662_002:0549c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼無緣若此　　如愚如迷者",
        "from": "T32n1662_002:0549c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此讚我雖獲　　速破而勿著",
        "from": "T32n1662_002:0549c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　憎惡正德者　　由此而瞋作",
        "from": "T32n1662_002:0549c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是讚成障礙　　我令不發起",
        "from": "T32n1662_002:0549c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　護不墮惡趣　　為彼行無我",
        "from": "T32n1662_002:0549c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若解諸有情　　利養尊卑縛",
        "from": "T32n1662_002:0549c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　令有情解脫　　彼意云何瞋",
        "from": "T32n1662_002:0549c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人欲捨苦　　來入解脫門",
        "from": "T32n1662_002:0549c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此是佛威德　　云何我瞋彼",
        "from": "T32n1662_002:0549c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此瞋我不作　　於福障礙故",
        "from": "T32n1662_002:0549c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　修行平等忍　　彼無不獲得",
        "from": "T32n1662_002:0549c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自身諸過失　　忍辱故不作",
        "from": "T32n1662_002:0549c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　過失不作故　　彼福而獲得",
        "from": "T32n1662_002:0549c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人福無有　　安忍而自生",
        "from": "T32n1662_002:0549c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常令安住忍　　云何說障礙",
        "from": "T32n1662_002:0549c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世求利益人　　不於施作障",
        "from": "T32n1662_002:0549c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　障礙出家故　　是不得出家",
        "from": "T32n1662_002:0550a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世間諸難得　　求者而能與",
        "from": "T32n1662_002:0550a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我唯說善利　　於過無所得",
        "from": "T32n1662_002:0550a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以彼菩提行　　遠離於所冤",
        "from": "T32n1662_002:0550a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如出舍中藏　　是故云不難",
        "from": "T32n1662_002:0550a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　懺悔於業因　　彼初為先導",
        "from": "T32n1662_002:0550a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是故於忍果　　如是而得生",
        "from": "T32n1662_002:0550a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼無我所心　　此心乃住忍",
        "from": "T32n1662_002:0550a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　成就不思議　　供養於妙法",
        "from": "T32n1662_002:0550a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此心為利他　　乃至以壽命",
        "from": "T32n1662_002:0550a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或以冤不供　　云何別說忍",
        "from": "T32n1662_002:0550a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於彼彼惡心　　各各與忍辱",
        "from": "T32n1662_002:0550a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於如是得忍　　因供養妙法",
        "from": "T32n1662_002:0550a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛土眾生土　　大牟尼說此",
        "from": "T32n1662_002:0550a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於彼奉事多　　能感於富貴",
        "from": "T32n1662_002:0550a15_0",
        "context_with_next_sentence": true
    },
    {
