[
    {
        "source_sentence": "佛說無量門微密持經(一名成道降魔得一切智)吳月支優婆塞支謙譯聞如是。",
        "from": "T19n1011_001:0680b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛遊於維耶離國大樹精舍。",
        "from": "T19n1011_001:0680b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告賢者大目揵連。",
        "from": "T19n1011_001:0680b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝行請遊三千大千世界比丘。",
        "from": "T19n1011_001:0680b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為弟子行及菩薩行者使會。",
        "from": "T19n1011_001:0680b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目連受教步須彌頂。",
        "from": "T19n1011_001:0680b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以道神力周遍佛界聲告使知。",
        "from": "T19n1011_001:0680b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應時精舍有四十萬比丘會。",
        "from": "T19n1011_001:0680b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復現神足令是天下猗行比丘。",
        "from": "T19n1011_001:0680b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉會精舍稽首畢一面住。",
        "from": "T19n1011_001:0680b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛復告慧見菩薩敬首菩薩。",
        "from": "T19n1011_001:0680b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除憂菩薩虞界菩薩。",
        "from": "T19n1011_001:0680b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去蓋菩薩闚音菩薩。",
        "from": "T19n1011_001:0680b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殆棄菩薩眾首菩薩。",
        "from": "T19n1011_001:0680b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯音菩薩慈氏菩薩。",
        "from": "T19n1011_001:0680b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等行請十方無央數佛國諸一生補處。",
        "from": "T19n1011_001:0680b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所從生法忍。",
        "from": "T19n1011_001:0680b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及不退轉信解菩薩悉令會此。",
        "from": "T19n1011_001:0680b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即皆受教而為感應。",
        "from": "T19n1011_001:0680b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有八百億一生補處菩薩。",
        "from": "T19n1011_001:0680b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三百億得無所從生法忍菩薩。",
        "from": "T19n1011_001:0680b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百億不退轉菩薩。",
        "from": "T19n1011_001:0680b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六百億信解菩薩。",
        "from": "T19n1011_001:0680b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆乘佛聖旨神足來會。",
        "from": "T19n1011_001:0680b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢者舍利弗見大眾會。",
        "from": "T19n1011_001:0680b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心念當問如來妙行。",
        "from": "T19n1011_001:0680b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演現其要令諸菩薩。",
        "from": "T19n1011_001:0680b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切望畢得無礙辯。",
        "from": "T19n1011_001:0680b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠聞十方無數剎土諸佛說法念不中忘。",
        "from": "T19n1011_001:0680b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於無上正真之道為最正覺。",
        "from": "T19n1011_001:0680b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾使菩薩得四清淨。",
        "from": "T19n1011_001:0680b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T19n1011_001:0680b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰人淨。",
        "from": "T19n1011_001:0680b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰法淨。",
        "from": "T19n1011_001:0680b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰慧淨。",
        "from": "T19n1011_001:0680b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四曰佛國嚴淨。",
        "from": "T19n1011_001:0680b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦疾使菩薩得四願悅。",
        "from": "T19n1011_001:0680b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T19n1011_001:0680b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰身和悅。",
        "from": "T19n1011_001:0680b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰言和悅。",
        "from": "T19n1011_001:0680b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰意和悅。",
        "from": "T19n1011_001:0680b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四曰滅和悅。",
        "from": "T19n1011_001:0680b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得四願悅便入四持門。",
        "from": "T19n1011_001:0680b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T19n1011_001:0680b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰如文行入持門。",
        "from": "T19n1011_001:0680b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰內深忍入持門。",
        "from": "T19n1011_001:0680b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰解人根德入持門。",
        "from": "T19n1011_001:0680b29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四曰知行報善入持門。",
        "from": "T19n1011_001:0680b29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗思念。",
        "from": "T19n1011_001:0680c01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩清淨無量慧地欲令佛說。",
        "from": "T19n1011_001:0680c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是佛語賢者舍利弗。",
        "from": "T19n1011_001:0680c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉意至。",
        "from": "T19n1011_001:0680c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲使諸菩薩疾成持行。",
        "from": "T19n1011_001:0680c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若舍利弗菩薩行此持要句者。",
        "from": "T19n1011_001:0680c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾入無量之門得微密持。",
        "from": "T19n1011_001:0680c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂是無為無向如正意解。",
        "from": "T19n1011_001:0680c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為應為滅內明順道為履上迹。",
        "from": "T19n1011_001:0680c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如微妙行不動寂靜。",
        "from": "T19n1011_001:0680c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無上微密無垢。",
        "from": "T19n1011_001:0680c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨自然惟無。",
        "from": "T19n1011_001:0680c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟無所著明光悅懌。",
        "from": "T19n1011_001:0680c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果而大勇為美譽。",
        "from": "T19n1011_001:0680c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動無動以正動近道。",
        "from": "T19n1011_001:0680c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因能善與遊無罣礙入諸法門。",
        "from": "T19n1011_001:0680c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強而有勢光大照。",
        "from": "T19n1011_001:0680c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠解等意無不入不斷持實。",
        "from": "T19n1011_001:0680c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是舍利弗行持菩薩非有數也。",
        "from": "T19n1011_001:0680c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行無數法為不以知故。",
        "from": "T19n1011_001:0680c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法斷覺而不作不見合法離。",
        "from": "T19n1011_001:0680c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見起不見滅。",
        "from": "T19n1011_001:0680c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不有去來現在之智。",
        "from": "T19n1011_001:0680c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不知法。",
        "from": "T19n1011_001:0680c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已成未成隨佛念行不念相。",
        "from": "T19n1011_001:0680c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不好不種姓。",
        "from": "T19n1011_001:0680c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不群從不方土。",
        "from": "T19n1011_001:0680c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不勞盡不以知無。",
        "from": "T19n1011_001:0680c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知不人淨不法說。",
        "from": "T19n1011_001:0680c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不我利不彼利。",
        "from": "T19n1011_001:0680c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不法律不行不除。",
        "from": "T19n1011_001:0680c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不念身不念人。",
        "from": "T19n1011_001:0680c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切法行無受者名為念佛。",
        "from": "T19n1011_001:0680c18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切法之正歸也。",
        "from": "T19n1011_001:0680c18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是無畏持義之藏。",
        "from": "T19n1011_001:0680c19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙願已滿上道已備。",
        "from": "T19n1011_001:0680c19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調靜諸定一切德本。",
        "from": "T19n1011_001:0680c20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不由彼致自從法生。",
        "from": "T19n1011_001:0680c20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種姓相好其行自然。",
        "from": "T19n1011_001:0680c21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邪行無斷行。",
        "from": "T19n1011_001:0680c21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為菩薩能學無量門微密之持。",
        "from": "T19n1011_001:0680c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為不退轉於無上正真之道。",
        "from": "T19n1011_001:0680c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何是從眾生之行。",
        "from": "T19n1011_001:0680c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而致無量得行之持。",
        "from": "T19n1011_001:0680c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是佛說偈言。",
        "from": "T19n1011_001:0680c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法空無望得　　為道莫自恣",
        "from": "T19n1011_001:0680c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　奉經而不亂　　則是疾得持",
        "from": "T19n1011_001:0680c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是經義為妙　　持無極常念",
        "from": "T19n1011_001:0680c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　學聞斯慧者　　可得成道行",
        "from": "T19n1011_001:0680c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　菩薩得此持　　常行精進者",
        "from": "T19n1011_001:0680c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方彼諸佛　　說法輒得聞",
        "from": "T19n1011_001:0681a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切能受持　　執義正不忘",
        "from": "T19n1011_001:0681a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　意解如日明　　自恣微妙行",
        "from": "T19n1011_001:0681a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　至於無上法　　弘大持之門",
        "from": "T19n1011_001:0681a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切是得向　　為能擁護經",
        "from": "T19n1011_001:0681a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　正使一切人　　盡劫共難聞",
        "from": "T19n1011_001:0681a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　悉能解諸結　　其智不可極",
        "from": "T19n1011_001:0681a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是坐上道者　　得為法王子",
        "from": "T19n1011_001:0681a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常厚護持法　　內性好斯經",
        "from": "T19n1011_001:0681a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　菩薩所貴重　　十方佛亦愛",
        "from": "T19n1011_001:0681a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　名譽蓋於世　　行此為無量",
        "from": "T19n1011_001:0681a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　八十億諸佛　　終時悉得見",
        "from": "T19n1011_001:0681a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切皆授手　　接行此持者",
        "from": "T19n1011_001:0681a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若於往千劫　　而為不善行",
        "from": "T19n1011_001:0681a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一月可以除　　但當守此經",
        "from": "T19n1011_001:0681a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　菩薩所興福　　億劫來積聚",
        "from": "T19n1011_001:0681a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善誦是持者　　一日可與等",
        "from": "T19n1011_001:0681a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　念意如強意　　思惟此上持",
        "from": "T19n1011_001:0681a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　向行眾德本　　必成至覺道",
        "from": "T19n1011_001:0681a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　假使三界人　　一切悉為魔",
        "from": "T19n1011_001:0681a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不能中得害　　唯行是經者",
        "from": "T19n1011_001:0681a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是說幻如諦　　為極法之要",
        "from": "T19n1011_001:0681a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸佛自此出　　道意所由生",
        "from": "T19n1011_001:0681a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　昔吾學道時　　得決於錠光",
        "from": "T19n1011_001:0681a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如恒沙等佛　　我悉於中見",
        "from": "T19n1011_001:0681a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲聞十方佛　　所說悉覺識",
        "from": "T19n1011_001:0681a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當專習是經　　一切可疾得",
        "from": "T19n1011_001:0681a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若願嚴佛國　　合成弟子眾",
        "from": "T19n1011_001:0681a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　光相及種好　　當從是經得",
        "from": "T19n1011_001:0681a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能除放逸念　　七日專惟是",
        "from": "T19n1011_001:0681b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　八十億佛臻　　共授以此持",
        "from": "T19n1011_001:0681b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不以意思意　　亦不思無意",
        "from": "T19n1011_001:0681b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　意而不有思　　然後可得持",
        "from": "T19n1011_001:0681b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　宜熟解此經　　勿有忘於道",
        "from": "T19n1011_001:0681b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得此持如海　　不復勤於財",
        "from": "T19n1011_001:0681b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲安諸天人　　一切願無難",
        "from": "T19n1011_001:0681b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此為道之座　　但當正意行",
        "from": "T19n1011_001:0681b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又舍利弗菩薩有四法行。",
        "from": "T19n1011_001:0681b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾得是持。",
        "from": "T19n1011_001:0681b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T19n1011_001:0681b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已厭惡於愛欲。",
        "from": "T19n1011_001:0681b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "己無賊害於眾生。",
        "from": "T19n1011_001:0681b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切有而為布施。",
        "from": "T19n1011_001:0681b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無疲厭晝夜樂法。",
        "from": "T19n1011_001:0681b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有四法行疾得是持。",
        "from": "T19n1011_001:0681b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T19n1011_001:0681b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能習山澤居內。",
        "from": "T19n1011_001:0681b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行深法忍不慕彼利養。",
        "from": "T19n1011_001:0681b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行無量施不惜軀命。",
        "from": "T19n1011_001:0681b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有四法行疾得是持。",
        "from": "T19n1011_001:0681b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T19n1011_001:0681b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰入八字義。",
        "from": "T19n1011_001:0681b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八字義者謂迹敏惟棄悲調滅忍。",
        "from": "T19n1011_001:0681b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常書持是。",
        "from": "T19n1011_001:0681b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰誦說常以調意。",
        "from": "T19n1011_001:0681b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰內性合是法要。",
        "from": "T19n1011_001:0681b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四曰勸行大道之行。",
        "from": "T19n1011_001:0681b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如此為疾得持。",
        "from": "T19n1011_001:0681b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是佛說偈言。",
        "from": "T19n1011_001:0681b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當棄欲苦行　　速捨愚癡地",
        "from": "T19n1011_001:0681b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無自恣作惡　　惡令墮惡道",
        "from": "T19n1011_001:0681b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是不作彼近　　不知利譽事",
        "from": "T19n1011_001:0681b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愛眼視眾人　　必貴如得色",
        "from": "T19n1011_001:0681b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾人之有諍　　皆由貪為本",
        "from": "T19n1011_001:0681b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　故盡汲汲劇　　棄是乃得持",
        "from": "T19n1011_001:0681b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲法者晝夜　　捨異唯道求",
        "from": "T19n1011_001:0681b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得持而心向　　是以常見經",
        "from": "T19n1011_001:0681b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　閑居習佛教　　住此不知彼",
        "from": "T19n1011_001:0681b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　深忍却放逸　　常如救頭然",
        "from": "T19n1011_001:0681b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法不猗知利　　亦不有身求",
        "from": "T19n1011_001:0681b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見失當棄利　　人以利為行",
        "from": "T19n1011_001:0681c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　快哉得佛教　　捨家離眾苦",
        "from": "T19n1011_001:0681c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　信者成道學　　敬佛法為智",
        "from": "T19n1011_001:0681c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智士不貪利　　何況行法者",
        "from": "T19n1011_001:0681c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛從遠斯成　　故當捨利求",
        "from": "T19n1011_001:0681c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當思八字義　　善書持此經",
        "from": "T19n1011_001:0681c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常誦用調已　　亦以開化人",
        "from": "T19n1011_001:0681c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得坐大智署　　一切見十方",
        "from": "T19n1011_001:0681c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無量佛在前　　勸成其道欲",
        "from": "T19n1011_001:0681c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又舍利弗菩薩有四德為是持。",
        "from": "T19n1011_001:0681c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四。",
        "from": "T19n1011_001:0681c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰常念諸佛。",
        "from": "T19n1011_001:0681c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰不有邪行。",
        "from": "T19n1011_001:0681c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰疾除行蓋。",
        "from": "T19n1011_001:0681c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四曰得入無量門微密之持。",
        "from": "T19n1011_001:0681c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有昔舍利弗往無央數不可計劫。",
        "from": "T19n1011_001:0681c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有佛名寶首曜王號如來至真等正覺明行成為善逝世間解無上士道法御天人師為佛眾祐。",
        "from": "T19n1011_001:0681c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度人無量臨滅度時。",
        "from": "T19n1011_001:0681c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世有轉輪王名光秉。",
        "from": "T19n1011_001:0681c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其太子曰無念德首。",
        "from": "T19n1011_001:0681c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年千八百歲。",
        "from": "T19n1011_001:0681c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從佛得聞此持而即奉行。",
        "from": "T19n1011_001:0681c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又七千歲未曾睡臥。",
        "from": "T19n1011_001:0681c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又七千歲未曾起身愛。",
        "from": "T19n1011_001:0681c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又七千歲未曾念財利。",
        "from": "T19n1011_001:0681c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又七千歲一心念行未曾傾倚於是則見九十億佛悉聞說法皆從受持。",
        "from": "T19n1011_001:0681c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便作沙門積九萬歲。",
        "from": "T19n1011_001:0681c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是無量門微密之持。",
        "from": "T19n1011_001:0681c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解說眾人於一世中。",
        "from": "T19n1011_001:0681c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就八十億人。",
        "from": "T19n1011_001:0681c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使行無上正真之道。",
        "from": "T19n1011_001:0681c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誘進令出家立不退轉地。",
        "from": "T19n1011_001:0681c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時眾中有尊者子名為月行。",
        "from": "T19n1011_001:0681c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是法要盡心願樂。",
        "from": "T19n1011_001:0681c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此德本值七十億佛。",
        "from": "T19n1011_001:0681c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從得上持逮諸菩薩無量之辯。",
        "from": "T19n1011_001:0681c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後三劫悉見諸佛。",
        "from": "T19n1011_001:0681c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三劫末時月行得佛名曰錠光。",
        "from": "T19n1011_001:0681c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號如來至真等正覺明行成為善逝世間解無上士道法御天人師為佛眾祐。",
        "from": "T19n1011_001:0681c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼太子無念德首。",
        "from": "T19n1011_001:0681c29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "講說法者則今西方無量壽佛是也。",
        "from": "T19n1011_001:0681c29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此賢劫中諸菩薩聞是法願樂者。",
        "from": "T19n1011_001:0682a01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得除後四十萬劫生死之行。",
        "from": "T19n1011_001:0682a02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又是學者欲疾作佛。",
        "from": "T19n1011_001:0682a03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得是經如有願樂道行之意。",
        "from": "T19n1011_001:0682a03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則是當立不退轉地。",
        "from": "T19n1011_001:0682a04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必為無上正真之道。",
        "from": "T19n1011_001:0682a04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況書持誦行。",
        "from": "T19n1011_001:0682a05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切人民莫能稱量說其福也。",
        "from": "T19n1011_001:0682a05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是佛說偈曰。",
        "from": "T19n1011_001:0682a06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常修念佛者　　眾邪不得便",
        "from": "T19n1011_001:0682a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　行蓋用疾除　　得妙無量持",
        "from": "T19n1011_001:0682a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　聞經心願樂　　書持敬諷誦",
        "from": "T19n1011_001:0682a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　天人莫能計　　福廣無有量",
        "from": "T19n1011_001:0682a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所生輒見佛　　信向不迴動",
        "from": "T19n1011_001:0682a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　體解深經要　　疾覺斯上道",
        "from": "T19n1011_001:0682a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得持惡道斷　　不失定大財",
        "from": "T19n1011_001:0682a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　色好常見佛　　即至覺上道",
        "from": "T19n1011_001:0682a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　尊者子聞持　　即追識宿命",
        "from": "T19n1011_001:0682a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見佛九十億　　得道如其願",
        "from": "T19n1011_001:0682a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若欲疾成佛　　道力降眾魔",
        "from": "T19n1011_001:0682a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲滿百福相　　行此非有難",
        "from": "T19n1011_001:0682a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如滿恒沙剎　　積寶以布施",
        "from": "T19n1011_001:0682a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　比書持此福　　終不得為比",
        "from": "T19n1011_001:0682a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是舍利弗菩薩行持者。",
        "from": "T19n1011_001:0682a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有八大神在雪山中。",
        "from": "T19n1011_001:0682a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共視護之。",
        "from": "T19n1011_001:0682a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰勇決神果強神。",
        "from": "T19n1011_001:0682a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饒裕神雄猛神。",
        "from": "T19n1011_001:0682a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體行神清潔神。",
        "from": "T19n1011_001:0682a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難勝神多安神。",
        "from": "T19n1011_001:0682a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯神必來。",
        "from": "T19n1011_001:0682a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常當澡浴淨其被服正色經行。",
        "from": "T19n1011_001:0682a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈念眾生思是法要。",
        "from": "T19n1011_001:0682a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神面不遠必安定誦。",
        "from": "T19n1011_001:0682a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有八菩薩今在欲行天。",
        "from": "T19n1011_001:0682a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常當存念。",
        "from": "T19n1011_001:0682a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名無愛天悅可天。",
        "from": "T19n1011_001:0682a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智光天懷金天。",
        "from": "T19n1011_001:0682a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積習天願滿天。",
        "from": "T19n1011_001:0682a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "星王天行審天。",
        "from": "T19n1011_001:0682a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯皆敏行此持者。",
        "from": "T19n1011_001:0682a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當諦惟持而常恭敬。",
        "from": "T19n1011_001:0682a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已如應行微妙法忍。",
        "from": "T19n1011_001:0682a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無得輕試。",
        "from": "T19n1011_001:0682a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是法時恒沙等菩薩。",
        "from": "T19n1011_001:0682a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得是持而不退轉。",
        "from": "T19n1011_001:0682b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六十姟天與人未發道意者。",
        "from": "T19n1011_001:0682b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今皆發起無上正真之道。",
        "from": "T19n1011_001:0682b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢者舍利弗白佛言。",
        "from": "T19n1011_001:0682b03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何名此經。",
        "from": "T19n1011_001:0682b03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言是法之要。",
        "from": "T19n1011_001:0682b03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名無量門微密之持。",
        "from": "T19n1011_001:0682b04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名成道降魔得一切智。",
        "from": "T19n1011_001:0682b04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當奉持之。",
        "from": "T19n1011_001:0682b05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是已皆歡喜受。",
        "from": "T19n1011_001:0682b05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說無量門微密持經",
        "from": "T19n1011_001:0682b06_0",
        "context_with_next_sentence": false
    }
]