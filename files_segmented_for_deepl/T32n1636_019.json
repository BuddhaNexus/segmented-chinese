[
    {
        "source_sentence": "大乘集菩薩學論卷第十九",
        "from": "T32n1636_019:0125b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1636_019:0125b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿宣梵大師賜紫",
        "from": "T32n1636_019:0125b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣日稱等奉　詔譯",
        "from": "T32n1636_019:0125b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性清淨品第十四之餘",
        "from": "T32n1636_019:0125b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_019:0125b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說依世俗勝義建立諸法。",
        "from": "T32n1636_019:0125b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如是知。",
        "from": "T32n1636_019:0125b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若時世尊以一切智觀察世間。",
        "from": "T32n1636_019:0125b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現證了知依世俗說則有六趣。",
        "from": "T32n1636_019:0125b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天若人及阿蘇囉地獄餓鬼傍生。",
        "from": "T32n1636_019:0125b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下種族受報貧富。",
        "from": "T32n1636_019:0125b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衰盛苦樂及以毀譽。",
        "from": "T32n1636_019:0125b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色無色等種種相生。",
        "from": "T32n1636_019:0125b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若時如來出現世間。",
        "from": "T32n1636_019:0125b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸眾生等於善逝所。",
        "from": "T32n1636_019:0125b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發生淨信樂勝義說。",
        "from": "T32n1636_019:0125b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時如來為利眾生如證而說。",
        "from": "T32n1636_019:0125b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法之實無有造作。",
        "from": "T32n1636_019:0125b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有分別。",
        "from": "T32n1636_019:0125b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有知覺。",
        "from": "T32n1636_019:0125b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有顯示。",
        "from": "T32n1636_019:0125b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無言說。",
        "from": "T32n1636_019:0125b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸法一切皆空。",
        "from": "T32n1636_019:0125b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是者。",
        "from": "T32n1636_019:0125b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何世尊復說受記無上正等菩提。",
        "from": "T32n1636_019:0125b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此法中以何為色。",
        "from": "T32n1636_019:0125b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復何名為受想行識。",
        "from": "T32n1636_019:0125b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能記別無上正等菩提。",
        "from": "T32n1636_019:0125b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是了知色本無故。",
        "from": "T32n1636_019:0125b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則菩提無生。",
        "from": "T32n1636_019:0125b19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至識本無故亦同是說。",
        "from": "T32n1636_019:0125b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸法中。",
        "from": "T32n1636_019:0125b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆無所得。",
        "from": "T32n1636_019:0125b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名為佛。",
        "from": "T32n1636_019:0125b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名菩提。",
        "from": "T32n1636_019:0125b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名菩薩。",
        "from": "T32n1636_019:0125b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名受記。",
        "from": "T32n1636_019:0125b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若色色空。",
        "from": "T32n1636_019:0125b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至若識識空。",
        "from": "T32n1636_019:0125b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依世俗剎那建立。",
        "from": "T32n1636_019:0125b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是言說但名想耳。",
        "from": "T32n1636_019:0125b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者於此勿生瞋惱。",
        "from": "T32n1636_019:0125b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世尊說。",
        "from": "T32n1636_019:0125b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法實際畢竟無盡。",
        "from": "T32n1636_019:0125b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼樂變化天不解深義。",
        "from": "T32n1636_019:0125b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執我為有亦無障礙。",
        "from": "T32n1636_019:0125b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊復說。",
        "from": "T32n1636_019:0125b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法菩提自性離故。",
        "from": "T32n1636_019:0125b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能覺了即是親近無量菩提。",
        "from": "T32n1636_019:0125b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T32n1636_019:0125b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離菩提則無涅盤。",
        "from": "T32n1636_019:0125b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無涅盤樂欲則無輪回可怖。",
        "from": "T32n1636_019:0125b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_019:0125b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如樂變化天所執有。",
        "from": "T32n1636_019:0125b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不可得故。",
        "from": "T32n1636_019:0125b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復實際而可得耶。",
        "from": "T32n1636_019:0125b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時娑婆界主聞佛說已即生領解。",
        "from": "T32n1636_019:0125b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說伽陀曰。",
        "from": "T32n1636_019:0125c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如人夢中飢所逼　　縱食百味飽何有　了斯夢相本來空　　諸法自性亦如是　如人善說諸言論　　聞已咸生於愛樂　若言若愛二皆無　　是中不得生疑惑　譬如琴瑟發妙音　　彼聲自性無所有　了知蘊愛亦同然　　妙慧推之不可得　譬如商珂大音響　　聞已尋求何所生　彼聲自性本來空　　則了大仙一切法　譬如上味諸餚饍　　食已資身使充實　如是身味本來無　　則了大仙一切法　譬如天帝現寶幢　　諸天咸覩生愛樂　了知是相本來空　　則了大仙一切法　譬如有人分地界　　強名城邑本來無　亦若身城自性空　　則了大仙一切法　譬如集會人擊鼓　　眾共聞已生忻悅　彼聲自性本來空　　則了大仙一切法　又如擊鼓藉緣生　　若無濕潤聲彌震　尋求是相何所來　　則了大仙一切法　復如擊鼓出洪音　　彼無思慮及呼召　如是分別本來無　　則了大仙一切法論曰。",
        "from": "T32n1636_019:0125c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此復明前義。",
        "from": "T32n1636_019:0125c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂眼等諸法自性無有。",
        "from": "T32n1636_019:0125c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸法無有則無成辦。",
        "from": "T32n1636_019:0125c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無成辦則無生滅。",
        "from": "T32n1636_019:0125c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至眼根所緣三相愛非愛等皆不可得。",
        "from": "T32n1636_019:0125c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有言說亦無表示。",
        "from": "T32n1636_019:0125c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如空拳舉示小兒。",
        "from": "T32n1636_019:0125c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但誑於彼都無有實。",
        "from": "T32n1636_019:0125c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於名量亦不可得。",
        "from": "T32n1636_019:0125c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此勝義空決定無有。",
        "from": "T32n1636_019:0125c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人夢中為彼大仙現威猛相而斷其首。",
        "from": "T32n1636_019:0125c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者覺已。",
        "from": "T32n1636_019:0125c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知一切皆自識現。",
        "from": "T32n1636_019:0125c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是解脫。",
        "from": "T32n1636_019:0125c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大樹緊那羅王問世尊言。",
        "from": "T32n1636_019:0125c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若所說法悉皆是空。",
        "from": "T32n1636_019:0125c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何世尊與我受記。",
        "from": "T32n1636_019:0126a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦不知。",
        "from": "T32n1636_019:0126a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自住樓閣不增不減。",
        "from": "T32n1636_019:0126a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不散壞受用無盡。",
        "from": "T32n1636_019:0126a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是相云何。",
        "from": "T32n1636_019:0126a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1636_019:0126a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當了知彼一切法自性清淨法界本空。",
        "from": "T32n1636_019:0126a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如鏡中現其影像。",
        "from": "T32n1636_019:0126a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如造車輪聚集而顯。",
        "from": "T32n1636_019:0126a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說作業自性亦爾。",
        "from": "T32n1636_019:0126a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如林樹由風所吹兩相摩擊而發於火。",
        "from": "T32n1636_019:0126a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是思惟。",
        "from": "T32n1636_019:0126a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火何所得。",
        "from": "T32n1636_019:0126a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說作業亦復如是。",
        "from": "T32n1636_019:0126a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說有人壽滿百歲。",
        "from": "T32n1636_019:0126a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知無有積聚年歲而可見也。",
        "from": "T32n1636_019:0126a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如法集經說。",
        "from": "T32n1636_019:0126a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼之與色本無有諍。",
        "from": "T32n1636_019:0126a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是耳聲乃至意法亦無有諍。",
        "from": "T32n1636_019:0126a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何眼色無有所諍。",
        "from": "T32n1636_019:0126a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二和合不相違故。",
        "from": "T32n1636_019:0126a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至意法二相和合亦復如是。",
        "from": "T32n1636_019:0126a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不和合則有所諍。",
        "from": "T32n1636_019:0126a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_019:0126a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無有二。",
        "from": "T32n1636_019:0126a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故不諍。",
        "from": "T32n1636_019:0126a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法無二各不相知。",
        "from": "T32n1636_019:0126a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由不相知則無分別。",
        "from": "T32n1636_019:0126a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離分別則無生滅。",
        "from": "T32n1636_019:0126a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有增減。",
        "from": "T32n1636_019:0126a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生愛樂亦無厭患。",
        "from": "T32n1636_019:0126a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住輪回不著涅盤。",
        "from": "T32n1636_019:0126a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_019:0126a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於諸法不樂不厭。",
        "from": "T32n1636_019:0126a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知則無染淨等相。",
        "from": "T32n1636_019:0126a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_019:0126a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若言如是我知如是我覺。",
        "from": "T32n1636_019:0126a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是虛妄之所分別。",
        "from": "T32n1636_019:0126a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_019:0126a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復於此眼等諸法。",
        "from": "T32n1636_019:0126a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善了知已。",
        "from": "T32n1636_019:0126a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不作是念。",
        "from": "T32n1636_019:0126a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我能分別。",
        "from": "T32n1636_019:0126a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人不與物諍則能隨順沙門道行。",
        "from": "T32n1636_019:0126a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為見法者。",
        "from": "T32n1636_019:0126a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為見佛者。",
        "from": "T32n1636_019:0126a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為見眾生者。",
        "from": "T32n1636_019:0126a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為見空性者。",
        "from": "T32n1636_019:0126a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_019:0126a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見無所見。",
        "from": "T32n1636_019:0126a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名諸法無見。",
        "from": "T32n1636_019:0126a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼經又云。",
        "from": "T32n1636_019:0126a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所發菩薩問曰。",
        "from": "T32n1636_019:0126a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如如空者。",
        "from": "T32n1636_019:0126a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法何說。",
        "from": "T32n1636_019:0126a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1636_019:0126a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼如如空不生不滅。",
        "from": "T32n1636_019:0126a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是者。",
        "from": "T32n1636_019:0126a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法皆空。",
        "from": "T32n1636_019:0126a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時無所發菩薩言。",
        "from": "T32n1636_019:0126a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是。",
        "from": "T32n1636_019:0126a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故世尊說一切法皆無生滅。",
        "from": "T32n1636_019:0126a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1636_019:0126a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故復說有為諸法悉皆生滅。",
        "from": "T32n1636_019:0126a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是者。",
        "from": "T32n1636_019:0126a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則佛之塔廟決定生滅。",
        "from": "T32n1636_019:0126a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T32n1636_019:0126a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大悲為除世間眾生驚怖。",
        "from": "T32n1636_019:0126a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順宣說生滅之法。",
        "from": "T32n1636_019:0126a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中無有少法可得。",
        "from": "T32n1636_019:0126a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況生滅耶。",
        "from": "T32n1636_019:0126a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如般若經云。",
        "from": "T32n1636_019:0126a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具壽須菩提。",
        "from": "T32n1636_019:0126a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生法者。",
        "from": "T32n1636_019:0126a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名無生。",
        "from": "T32n1636_019:0126b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提言。",
        "from": "T32n1636_019:0126b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利子。",
        "from": "T32n1636_019:0126b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生無所生是無生法。",
        "from": "T32n1636_019:0126b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_019:0126b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名積集清淨福行而成菩提。",
        "from": "T32n1636_019:0126b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨慈緣於有情。",
        "from": "T32n1636_019:0126b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善觀察已無眾生相。",
        "from": "T32n1636_019:0126b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復供養十方善逝。",
        "from": "T32n1636_019:0126b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼二足尊已離垢染亦不可見。",
        "from": "T32n1636_019:0126b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當供養苦惱眾生。",
        "from": "T32n1636_019:0126b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是調御師之所教勅。",
        "from": "T32n1636_019:0126b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中上供而以施之。",
        "from": "T32n1636_019:0126b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲心拔除眾苦。",
        "from": "T32n1636_019:0126b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲安隱樂發生淨慧斷除煩惱。",
        "from": "T32n1636_019:0126b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此正理善了知已當離疑惑。",
        "from": "T32n1636_019:0126b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是供養果不難得。",
        "from": "T32n1636_019:0126b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了佛正教如教觀身念八聖道斷諸癡染。",
        "from": "T32n1636_019:0126b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當捨己身承事諸佛。",
        "from": "T32n1636_019:0126b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不希世間諸天妙樂。",
        "from": "T32n1636_019:0126b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修奢摩他毘鉢舍那若寂遍寂。",
        "from": "T32n1636_019:0126b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為出苦道。",
        "from": "T32n1636_019:0126b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何建立世俗諸法。",
        "from": "T32n1636_019:0126b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於虛妄處和合相應凡夫迷倒。",
        "from": "T32n1636_019:0126b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂為子想依止成就。",
        "from": "T32n1636_019:0126b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說勝義空處則無是相。",
        "from": "T32n1636_019:0126b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切法本無生故。",
        "from": "T32n1636_019:0126b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無垢稱經說。",
        "from": "T32n1636_019:0126b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利問維摩詰曰。",
        "from": "T32n1636_019:0126b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛妄分別以何為本。",
        "from": "T32n1636_019:0126b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰顛倒想為本。",
        "from": "T32n1636_019:0126b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "T32n1636_019:0126b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒想孰為本。",
        "from": "T32n1636_019:0126b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰無住為本。",
        "from": "T32n1636_019:0126b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又問。",
        "from": "T32n1636_019:0126b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無住孰為本。",
        "from": "T32n1636_019:0126b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰無住則無本。",
        "from": "T32n1636_019:0126b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利從無住本則能建立一切諸法。",
        "from": "T32n1636_019:0126b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又般若經云。",
        "from": "T32n1636_019:0126b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當捨家安住勇猛斷除煩惱。",
        "from": "T32n1636_019:0126b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心淨平等修習般若波羅蜜多。",
        "from": "T32n1636_019:0126b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法集經云。",
        "from": "T32n1636_019:0126b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善解空者。",
        "from": "T32n1636_019:0126b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不依止世間所有利衰稱譏忻慼毀譽。",
        "from": "T32n1636_019:0126b22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸苦惱不生厭患。",
        "from": "T32n1636_019:0126b23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸快樂不生愛著。",
        "from": "T32n1636_019:0126b23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為世法之所破壞。",
        "from": "T32n1636_019:0126b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善解空者。",
        "from": "T32n1636_019:0126b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則了空性無有少法而生取捨。",
        "from": "T32n1636_019:0126b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無取捨則無貪厭。",
        "from": "T32n1636_019:0126b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則名為善見空者善知空者。",
        "from": "T32n1636_019:0126b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切法無有執著。",
        "from": "T32n1636_019:0126b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無執著。",
        "from": "T32n1636_019:0126b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於諸法無有所諍。",
        "from": "T32n1636_019:0126b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_019:0126b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明剎那心得清淨。",
        "from": "T32n1636_019:0126b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂由我慢輕捨眾生。",
        "from": "T32n1636_019:0126b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知我見本來無有。",
        "from": "T32n1636_019:0126b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼若一心專注能斷。",
        "from": "T32n1636_019:0126b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人速疾心得清淨。",
        "from": "T32n1636_019:0126c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀察於一切處諸眾生所。",
        "from": "T32n1636_019:0126c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂尊重離於攀緣及所分別自他平等何有相違。",
        "from": "T32n1636_019:0126c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行學斯不為難。",
        "from": "T32n1636_019:0126c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬若如意摩尼寶珠人所愛樂非能自貴。",
        "from": "T32n1636_019:0126c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故於他當生尊重。",
        "from": "T32n1636_019:0126c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂由顛倒分別執著。",
        "from": "T32n1636_019:0126c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於有情邊。",
        "from": "T32n1636_019:0126c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生慳悋或生毀訾。",
        "from": "T32n1636_019:0126c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由我慢之所纏縛。",
        "from": "T32n1636_019:0126c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是緣故。",
        "from": "T32n1636_019:0126c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多生讚毀增長熱惱如何鼻燃。",
        "from": "T32n1636_019:0126c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是聲無心於讚。",
        "from": "T32n1636_019:0126c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有此妄慧起彼適悅生。",
        "from": "T32n1636_019:0126c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何於他言而生於愛。",
        "from": "T32n1636_019:0126c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他喜若生非我有故。",
        "from": "T32n1636_019:0126c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常樂平等自取安靜。",
        "from": "T32n1636_019:0126c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解分別縛離讚毀相。",
        "from": "T32n1636_019:0126c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是了知都無果利。",
        "from": "T32n1636_019:0126c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於財利多生喜惱。",
        "from": "T32n1636_019:0126c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慣習慳嫉機巧希求。",
        "from": "T32n1636_019:0126c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順違二種俱獲重罪。",
        "from": "T32n1636_019:0126c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順正理當起對治。",
        "from": "T32n1636_019:0126c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧我慢峯心速清淨。",
        "from": "T32n1636_019:0126c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離語言過專樂寂默。",
        "from": "T32n1636_019:0126c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除教誨相續顯示。",
        "from": "T32n1636_019:0126c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了諸妄法無有堅實。",
        "from": "T32n1636_019:0126c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生苦之本不得久住。",
        "from": "T32n1636_019:0126c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正命受用品第十五",
        "from": "T32n1636_019:0126c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次長者。",
        "from": "T32n1636_019:0126c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在家菩薩當樂正命平等受用。",
        "from": "T32n1636_019:0126c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離非法邪活命等。",
        "from": "T32n1636_019:0126c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寶雲經說。",
        "from": "T32n1636_019:0126c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩於施者所不以身業假現威儀。",
        "from": "T32n1636_019:0126c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若舉足時不詐徐步。",
        "from": "T32n1636_019:0126c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若下足時不作瞻視。",
        "from": "T32n1636_019:0126c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現思惟相。",
        "from": "T32n1636_019:0126c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩語不矯詐不為利養。",
        "from": "T32n1636_019:0126c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而現細語柔軟語愛語隨順語。",
        "from": "T32n1636_019:0126c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩心不諂曲不為利養。",
        "from": "T32n1636_019:0126c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語現少欲心廣貪求內懷熱惱。",
        "from": "T32n1636_019:0126c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩善能捨離。",
        "from": "T32n1636_019:0126c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利養故而現異相。",
        "from": "T32n1636_019:0126c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見施者終不自言我乏衣服臥具飲食病緣醫藥願垂惠施。",
        "from": "T32n1636_019:0126c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩善能捨離。",
        "from": "T32n1636_019:0126c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利養故虛言鼓動。",
        "from": "T32n1636_019:0126c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見施者不作詐言。",
        "from": "T32n1636_019:0126c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "某甲施主持如是物而施於我。",
        "from": "T32n1636_019:0126c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以某物而報彼恩。",
        "from": "T32n1636_019:0126c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言。",
        "from": "T32n1636_019:0126c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我少欲持戒多聞故施。",
        "from": "T32n1636_019:0126c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我起悲心而攝受之。",
        "from": "T32n1636_019:0126c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至身行惡者。",
        "from": "T32n1636_019:0126c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利養故奔走往來而破禁戒。",
        "from": "T32n1636_019:0127a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見餘人同梵行者所得利養。",
        "from": "T32n1636_019:0127a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興心損壞。",
        "from": "T32n1636_019:0127a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名菩薩離於險惡而求利養。",
        "from": "T32n1636_019:0127a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何捨離非法利養。",
        "from": "T32n1636_019:0127a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此菩薩不以斗秤而行欺誑。",
        "from": "T32n1636_019:0127a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他所委信不生侵損。",
        "from": "T32n1636_019:0127a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何捨離不淨利養。",
        "from": "T32n1636_019:0127a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此菩薩於窣堵波若法若僧所有之物不作互用。",
        "from": "T32n1636_019:0127a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有所得亦不肯受。",
        "from": "T32n1636_019:0127a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何捨離耽著利養。",
        "from": "T32n1636_019:0127a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此菩薩所得之物。",
        "from": "T32n1636_019:0127a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不攝於己不自衒富亦不積聚。",
        "from": "T32n1636_019:0127a08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨時而施沙門梵志婆羅門等。",
        "from": "T32n1636_019:0127a08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或施父母親眷朋屬。",
        "from": "T32n1636_019:0127a09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或自受用。",
        "from": "T32n1636_019:0127a10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受用時不生染著。",
        "from": "T32n1636_019:0127a10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若時菩薩不獲利養。",
        "from": "T32n1636_019:0127a10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不生苦亦無熱惱。",
        "from": "T32n1636_019:0127a11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復施者無有所施。",
        "from": "T32n1636_019:0127a11_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩於彼不生瞋心。",
        "from": "T32n1636_019:0127a12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又無盡意經說。",
        "from": "T32n1636_019:0127a12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有眾生不堪受施如其所許持用施之。",
        "from": "T32n1636_019:0127a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有來乞者。",
        "from": "T32n1636_019:0127a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不起惱施。",
        "from": "T32n1636_019:0127a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為他人逼迫而施。",
        "from": "T32n1636_019:0127a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無勞倦施。",
        "from": "T32n1636_019:0127a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無異相施。",
        "from": "T32n1636_019:0127a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無輕易施。",
        "from": "T32n1636_019:0127a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無背面施。",
        "from": "T32n1636_019:0127a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無棄擲施。",
        "from": "T32n1636_019:0127a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不敬施。",
        "from": "T32n1636_019:0127a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無分別施。",
        "from": "T32n1636_019:0127a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不自手施。",
        "from": "T32n1636_019:0127a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不依時施。",
        "from": "T32n1636_019:0127a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不平等施。",
        "from": "T32n1636_019:0127a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無惱眾生施。",
        "from": "T32n1636_019:0127a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如最上授所問經云。",
        "from": "T32n1636_019:0127a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行布施波羅蜜多時。",
        "from": "T32n1636_019:0127a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人求乞所須物。",
        "from": "T32n1636_019:0127a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當依我作而給與之。",
        "from": "T32n1636_019:0127a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若樂酒者使生正念。",
        "from": "T32n1636_019:0127a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即與其飲後復令斷。",
        "from": "T32n1636_019:0127a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是菩薩清淨方便攝受眾生。",
        "from": "T32n1636_019:0127a20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若其內心愛樂不捨。",
        "from": "T32n1636_019:0127a21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩即為種種訶毀。",
        "from": "T32n1636_019:0127a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酒之過失如利刀劍。",
        "from": "T32n1636_019:0127a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定遠離不令相續。",
        "from": "T32n1636_019:0127a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是施者則無過咎。",
        "from": "T32n1636_019:0127a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_019:0127a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說施行清淨漸令趣入。",
        "from": "T32n1636_019:0127a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如餘經中廣明制斷。",
        "from": "T32n1636_019:0127a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如虛空藏經云。",
        "from": "T32n1636_019:0127a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂我清淨施。",
        "from": "T32n1636_019:0127a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所清淨施。",
        "from": "T32n1636_019:0127a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因清淨施。",
        "from": "T32n1636_019:0127a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見清淨施。",
        "from": "T32n1636_019:0127a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相清淨施。",
        "from": "T32n1636_019:0127a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種性清淨施。",
        "from": "T32n1636_019:0127a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那果報清淨施。",
        "from": "T32n1636_019:0127a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心等如空清淨施。",
        "from": "T32n1636_019:0127a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至譬如虛空無有邊際。",
        "from": "T32n1636_019:0127a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行施亦復如是。",
        "from": "T32n1636_019:0127a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如虛空寬廣無礙。",
        "from": "T32n1636_019:0127a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行施廣大回向亦復如是。",
        "from": "T32n1636_019:0127a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如虛空無有色相。",
        "from": "T32n1636_019:0127b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如是離色行施亦復如是。",
        "from": "T32n1636_019:0127b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如虛空無想無作無表無相。",
        "from": "T32n1636_019:0127b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行施亦復如是。",
        "from": "T32n1636_019:0127b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如虛空遍諸佛剎。",
        "from": "T32n1636_019:0127b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩大慈緣諸有情廣大行施亦復如是。",
        "from": "T32n1636_019:0127b04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如虛空含容一切。",
        "from": "T32n1636_019:0127b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩行施攝諸有情亦復如是。",
        "from": "T32n1636_019:0127b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至如變化人施變化者。",
        "from": "T32n1636_019:0127b06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有受用亦無分別。",
        "from": "T32n1636_019:0127b06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意達諸法無所希求。",
        "from": "T32n1636_019:0127b07_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離我我所自性清淨。",
        "from": "T32n1636_019:0127b07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以勝智慧斷諸煩惱。",
        "from": "T32n1636_019:0127b08_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以方便智不捨有情。",
        "from": "T32n1636_019:0127b08_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為菩薩修行布施波羅蜜多猶若虛空。",
        "from": "T32n1636_019:0127b09_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘集菩薩學論卷第十九",
        "from": "T32n1636_019:0127b11_0",
        "context_with_next_sentence": false
    }
]