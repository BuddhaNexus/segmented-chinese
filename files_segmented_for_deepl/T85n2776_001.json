[
    {
        "source_sentence": "釋肇序",
        "from": "T85n2776_001:0438a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本深也。",
        "from": "T85n2776_001:0438a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟者開也。",
        "from": "T85n2776_001:0438a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世開深非王印不□□□□□□□□□□□□□喻也。",
        "from": "T85n2776_001:0438a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故法華經云。",
        "from": "T85n2776_001:0438a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法華經藏深固幽遠無人能到。",
        "from": "T85n2776_001:0438a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□□□□□□□言詞相寂滅。",
        "from": "T85n2776_001:0438a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經云。",
        "from": "T85n2776_001:0438a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法相如是豈可說等。",
        "from": "T85n2776_001:0438a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則但可智悟。",
        "from": "T85n2776_001:0438a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難□□□□□聖應不同者。",
        "from": "T85n2776_001:0438a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應迹殊也。",
        "from": "T85n2776_001:0438a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生感異。",
        "from": "T85n2776_001:0438a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法佛應殊。",
        "from": "T85n2776_001:0438a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛身既隨感□□□□□遂緣千異故曰不同也。",
        "from": "T85n2776_001:0438a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總標本迹不思議也　非本無以垂迹非迹無以顯本者。",
        "from": "T85n2776_001:0438a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則聖人若不住不二之宗本。",
        "from": "T85n2776_001:0438a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無以垂千異之殊迹。",
        "from": "T85n2776_001:0438a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群生不親千異之殊迹。",
        "from": "T85n2776_001:0438a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無以悟不二之宗本。",
        "from": "T85n2776_001:0438a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故肇師云。",
        "from": "T85n2776_001:0438a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因未以示本。",
        "from": "T85n2776_001:0438a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "託麁以表微。",
        "from": "T85n2776_001:0438a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即其事也。",
        "from": "T85n2776_001:0438a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台辨本迹略有五重。",
        "from": "T85n2776_001:0438a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一真俗。",
        "from": "T85n2776_001:0438a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二理教。",
        "from": "T85n2776_001:0438a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三理行。",
        "from": "T85n2776_001:0438a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四體用。",
        "from": "T85n2776_001:0438a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五權實。",
        "from": "T85n2776_001:0438a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為因本垂迹尋迹得本　本迹雖殊不思議一也。",
        "from": "T85n2776_001:0438a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以本迹相由故合明耳。",
        "from": "T85n2776_001:0438a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故詩云。",
        "from": "T85n2776_001:0438a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南有樛木葛虆縲之。",
        "from": "T85n2776_001:0438a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下盤曰樛。",
        "from": "T85n2776_001:0438a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上盤曰句。",
        "from": "T85n2776_001:0438a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若吹高松擢質於雲霄之上。",
        "from": "T85n2776_001:0438a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葛虆延蔓於荊蓁之下。",
        "from": "T85n2776_001:0438a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則葛蘿雖有攀緣之功而不離蓬蒿之下。",
        "from": "T85n2776_001:0438a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若樛木不接葛蘿仰攀。",
        "from": "T85n2776_001:0438a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則雖千尋之檊亦可因依而達矣。",
        "from": "T85n2776_001:0438a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法合亦同。",
        "from": "T85n2776_001:0438a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便如來栖神於九居之上蒼生淪沒於三塗之下交感不會。",
        "from": "T85n2776_001:0438a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則雖群生有本覺之智。",
        "from": "T85n2776_001:0438a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不免淪迴之苦。",
        "from": "T85n2776_001:0438a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若使蒼生深信仰之誠。",
        "from": "T85n2776_001:0438a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛垂大悲之迹。",
        "from": "T85n2776_001:0438a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則雖十力位尊三祇劫遠。",
        "from": "T85n2776_001:0438a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自強不息咸可成矣。",
        "from": "T85n2776_001:0438a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本迹之義於茲顯然。",
        "from": "T85n2776_001:0438a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此第三明釋題目也　故命侍者。",
        "from": "T85n2776_001:0438a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標以名焉。",
        "from": "T85n2776_001:0438b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑累品中。",
        "from": "T85n2776_001:0438b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難此經名維摩詰所說亦名不可思議解脫法門。",
        "from": "T85n2776_001:0438b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即命阿難為侍者。",
        "from": "T85n2776_001:0438b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此以本迹俱不思議故。",
        "from": "T85n2776_001:0438b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令不思議為名也。",
        "from": "T85n2776_001:0438b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三明重譯之由。",
        "from": "T85n2776_001:0438b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由前翻譯失旨故重譯也。",
        "from": "T85n2776_001:0438b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文四。",
        "from": "T85n2776_001:0438b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明譯經主。",
        "from": "T85n2776_001:0438b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即秦主姚興也。",
        "from": "T85n2776_001:0438b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明譯經時。",
        "from": "T85n2776_001:0438b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即弘始八年也。",
        "from": "T85n2776_001:0438b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三明能譯人。",
        "from": "T85n2776_001:0438b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "什法師也。",
        "from": "T85n2776_001:0438b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明所譯法。",
        "from": "T85n2776_001:0438b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此經也。",
        "from": "T85n2776_001:0438b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前文有二。",
        "from": "T85n2776_001:0438b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初舉人歎德也。",
        "from": "T85n2776_001:0438b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明重譯之本意。",
        "from": "T85n2776_001:0438b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中大秦天王者舉人也。",
        "from": "T85n2776_001:0438b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俊神等者歎德也。",
        "from": "T85n2776_001:0438b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大秦歎其國大王。",
        "from": "T85n2776_001:0438b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王顯其人尊。",
        "from": "T85n2776_001:0438b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖德普覆謂之天。",
        "from": "T85n2776_001:0438b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黎人仰歸往謂之王。",
        "from": "T85n2776_001:0438b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此孝治之德也(故孝經云。",
        "from": "T85n2776_001:0438b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔者明王之以孝治天下。",
        "from": "T85n2776_001:0438b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢遺小國之民臣。",
        "from": "T85n2776_001:0438b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而況於公侯伯子男呼故得萬國之歡之等)又可為民所載謂之天。",
        "from": "T85n2776_001:0438b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於人自在謂之王。",
        "from": "T85n2776_001:0438b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯則至尊之稱也。",
        "from": "T85n2776_001:0438b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俊神者俊英亦俊傑也。",
        "from": "T85n2776_001:0438b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有釋。",
        "from": "T85n2776_001:0438b15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "才過十人曰豪。",
        "from": "T85n2776_001:0438b15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百人曰英。",
        "from": "T85n2776_001:0438b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千人曰俊。",
        "from": "T85n2776_001:0438b15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬人曰傑。",
        "from": "T85n2776_001:0438b16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神謂神思也。",
        "from": "T85n2776_001:0438b16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂俊傑之心世英之等。",
        "from": "T85n2776_001:0438b16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云超世。",
        "from": "T85n2776_001:0438b17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此歎治國之智　玄心獨悟者。",
        "from": "T85n2776_001:0438b17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊心玄鏡故曰玄心。",
        "from": "T85n2776_001:0438b18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幽鑒不群故名獨悟。",
        "from": "T85n2776_001:0438b18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此歎悟理心也　弘至理於萬機之上者。",
        "from": "T85n2776_001:0438b19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘者大勅及萬方故云大也。",
        "from": "T85n2776_001:0438b20_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至者極也。",
        "from": "T85n2776_001:0438b20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治化萬機者。",
        "from": "T85n2776_001:0438b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬事之機微也。",
        "from": "T85n2776_001:0438b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚書云。",
        "from": "T85n2776_001:0438b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兢兢業業一日二日萬機。",
        "from": "T85n2776_001:0438b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此爰秦王善治國政垂衣端拱而物自歸。",
        "from": "T85n2776_001:0438b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖處萬機之務而不失天運之化　揚道化於千載之下者。",
        "from": "T85n2776_001:0438b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揚謂宣揚。",
        "from": "T85n2776_001:0438b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化者法化也。",
        "from": "T85n2776_001:0438b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千載者載年也。",
        "from": "T85n2776_001:0438b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來滅後一千三百餘年。",
        "from": "T85n2776_001:0438b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘至教方傳此土。",
        "from": "T85n2776_001:0438b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦主應茲住運故得廣崇法化也。",
        "from": "T85n2776_001:0438b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則由俊神越世故能弘至理於萬機。",
        "from": "T85n2776_001:0438b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由玄心獨悟故能揚道化於千載。",
        "from": "T85n2776_001:0438b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬機之先故云上。",
        "from": "T85n2776_001:0438b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千年之後故云下也。",
        "from": "T85n2776_001:0438b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此第二明重譯之意。",
        "from": "T85n2776_001:0438c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每尋翫茲典以為栖神之宅□□□□□尋翫習者此也。",
        "from": "T85n2776_001:0438c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "典者經典也。",
        "from": "T85n2776_001:0438c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以者用也。",
        "from": "T85n2776_001:0438c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為者作也。",
        "from": "T85n2776_001:0438c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "栖者止息也。",
        "from": "T85n2776_001:0438c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神□□□□□處也。",
        "from": "T85n2776_001:0438c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下云畢竟空寂舍義因也。",
        "from": "T85n2776_001:0438c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明秦主得古譯經常披尋□□□□□□之所也。",
        "from": "T85n2776_001:0438c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而攝支竺所出理滯於文者。",
        "from": "T85n2776_001:0438c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "支譯支謙。",
        "from": "T85n2776_001:0438c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竺謂法護也。",
        "from": "T85n2776_001:0438c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理滯於□□□□□經支謙所出以不來相而來為辱來。",
        "from": "T85n2776_001:0438c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見相而見為相見等。",
        "from": "T85n2776_001:0438c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則大乘之理滯於譯者之文。",
        "from": "T85n2776_001:0438c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者如什所譯。",
        "from": "T85n2776_001:0438c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云不來相而來不見相而見。",
        "from": "T85n2776_001:0438c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則精於至理而應會之義不失。",
        "from": "T85n2776_001:0438c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言辱來相見乃涉於浮俗。",
        "from": "T85n2776_001:0438c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而理悟之道都捐如世人云不面。",
        "from": "T85n2776_001:0438c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在昔辱來相見。",
        "from": "T85n2776_001:0438c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈法身大士同俗執相見邪　常恐玄宗墜於譯人者。",
        "from": "T85n2776_001:0438c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻譯既乖經旨故。",
        "from": "T85n2776_001:0438c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐玄妙之宗墜於譯人之筆也。",
        "from": "T85n2776_001:0438c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北天之運運通有在者。",
        "from": "T85n2776_001:0438c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北天者北天竺國也。",
        "from": "T85n2776_001:0438c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運者動也轉也。",
        "from": "T85n2776_001:0438c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大品經云。",
        "from": "T85n2776_001:0438c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明佛記此經我滅度後傳於南天。",
        "from": "T85n2776_001:0438c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次至西天。",
        "from": "T85n2776_001:0438c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後至北天。",
        "from": "T85n2776_001:0438c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當沒於地。",
        "from": "T85n2776_001:0438c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據運數南天五百年西天五百年。",
        "from": "T85n2776_001:0438c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方至北天。",
        "from": "T85n2776_001:0438c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此國即北天焉。",
        "from": "T85n2776_001:0438c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國之東隅故。",
        "from": "T85n2776_001:0438c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千年之後大教合傳於此國。",
        "from": "T85n2776_001:0438c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果佛言故曰通有在也。",
        "from": "T85n2776_001:0438c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明譯時　以弘始八年歲次鶉火者。",
        "from": "T85n2776_001:0438c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太歲在午應曰敦[狂王+羊]。",
        "from": "T85n2776_001:0438c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月在午方云鶉火。",
        "from": "T85n2776_001:0438c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此以月號命年故也。",
        "from": "T85n2776_001:0438c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此出爾雅　命大將軍常山公者。",
        "from": "T85n2776_001:0438c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姚嵩也　安城侯者。",
        "from": "T85n2776_001:0438c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姚顯也。",
        "from": "T85n2776_001:0438c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常山安城即所封之邑也。",
        "from": "T85n2776_001:0438c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公之與侯伯子男五等諸侯也。",
        "from": "T85n2776_001:0438c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即舉所封之號也　於常安大寺者。",
        "from": "T85n2776_001:0438c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦主諱長。",
        "from": "T85n2776_001:0438c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是姚萇之子故曰常。",
        "from": "T85n2776_001:0438c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則譯經處也。",
        "from": "T85n2776_001:0438c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大寺別處也。",
        "from": "T85n2776_001:0438c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即草堂寺以草覆堂故云草堂。",
        "from": "T85n2776_001:0438c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群僧所集謂之大寺。",
        "from": "T85n2776_001:0438c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當時之號非本名也　與義學沙門者。",
        "from": "T85n2776_001:0439a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取善理之人簡餘學也。",
        "from": "T85n2776_001:0439a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生肇融叡憑影嚴觀等千二百人皆一時之傑。",
        "from": "T85n2776_001:0439a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各旨盛迹及西。",
        "from": "T85n2776_001:0439a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請什公譯經等事廣如抄及傳述。",
        "from": "T85n2776_001:0439a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此第三明能譯人。",
        "from": "T85n2776_001:0439a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分二。",
        "from": "T85n2776_001:0439a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初舉人歎德後明譯經之意。",
        "from": "T85n2776_001:0439a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初什公之一字舉人　以高世之量等者。",
        "from": "T85n2776_001:0439a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎德也。",
        "from": "T85n2776_001:0439a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即智量高遠出過於世故云也　冥心真境者。",
        "from": "T85n2776_001:0439a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心與理冥也　既盡環中者。",
        "from": "T85n2776_001:0439a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智窮實相。",
        "from": "T85n2776_001:0439a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即莊子云。",
        "from": "T85n2776_001:0439a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摳始得其環中以應乎無窮。",
        "from": "T85n2776_001:0439a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼以是非為循環。",
        "from": "T85n2776_001:0439a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此絕是非處為環中。",
        "from": "T85n2776_001:0439a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今借彼言以明實相也　又善方言者。",
        "from": "T85n2776_001:0439a11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善解梵漢二國方言也。",
        "from": "T85n2776_001:0439a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此第二譯經意　于時手執胡文口自宣譯。",
        "from": "T85n2776_001:0439a12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡文者梵夾也。",
        "from": "T85n2776_001:0439a13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂承梵天之餘訓言文者謬也。",
        "from": "T85n2776_001:0439a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故南山尊宿云。",
        "from": "T85n2776_001:0439a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶是崑之一礫耳。",
        "from": "T85n2776_001:0439a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "什法師既閑兩國之言。",
        "from": "T85n2776_001:0439a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故口自翻譯也　道俗虔虔者。",
        "from": "T85n2776_001:0439a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道謂義學沙門。",
        "from": "T85n2776_001:0439a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗謂儒宗詞伯也。",
        "from": "T85n2776_001:0439a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是因證義人也。",
        "from": "T85n2776_001:0439a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔虔者。",
        "from": "T85n2776_001:0439a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔者敬也　再言者表誠敬之志　一言三復者。",
        "from": "T85n2776_001:0439a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂再審定其義也。",
        "from": "T85n2776_001:0439a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故論語南客三復白珪故云白珪之點尚可磨。",
        "from": "T85n2776_001:0439a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯言之點不可為。",
        "from": "T85n2776_001:0439a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故讀詩至此皆三復也。",
        "from": "T85n2776_001:0439a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今取彼言耳。",
        "from": "T85n2776_001:0439a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂文詮正理用軌物。",
        "from": "T85n2776_001:0439a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心得意則道果由成。",
        "from": "T85n2776_001:0439a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失旨則諸見從起。",
        "from": "T85n2776_001:0439a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故須三復也　陶冶精求粉存聖意者。",
        "from": "T85n2776_001:0439a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合土日陶。",
        "from": "T85n2776_001:0439a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎔金名冶。",
        "from": "T85n2776_001:0439a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此喻也。",
        "from": "T85n2776_001:0439a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如陶師之埏填簡除沙鹵。",
        "from": "T85n2776_001:0439a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若金師之鎔鑄直取精純。",
        "from": "T85n2776_001:0439a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能成其器用也。",
        "from": "T85n2776_001:0439a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今亦如是簡去繁言直詮聖旨以成無上法寶也。",
        "from": "T85n2776_001:0439a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明譯經之意也。",
        "from": "T85n2776_001:0439a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此第四所譯法　其文約而詣其旨婉而彰者。",
        "from": "T85n2776_001:0439a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約謂省約。",
        "from": "T85n2776_001:0439a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣謂至也。",
        "from": "T85n2776_001:0439a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明文雖省約而理詣實相。",
        "from": "T85n2776_001:0439a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旨婉而彰者意也。",
        "from": "T85n2776_001:0439b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婉順也。",
        "from": "T85n2776_001:0439b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彰明也。",
        "from": "T85n2776_001:0439b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如智度菩薩母等偈。",
        "from": "T85n2776_001:0439b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意則婉順理。",
        "from": "T85n2776_001:0439b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彰明前序。",
        "from": "T85n2776_001:0439b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明古人未融大觀故理蹇闕。",
        "from": "T85n2776_001:0439b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通方言故詞疎。",
        "from": "T85n2776_001:0439b03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以什公盡環中故旨婉而彰。",
        "from": "T85n2776_001:0439b04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善方言故文約而詣故　微遠之言於茲顯然。",
        "from": "T85n2776_001:0439b04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微謂幽微也。",
        "from": "T85n2776_001:0439b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老子云。",
        "from": "T85n2776_001:0439b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搏之不得名曰微也。",
        "from": "T85n2776_001:0439b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠謂深遠。",
        "from": "T85n2776_001:0439b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯然者明也。",
        "from": "T85n2776_001:0439b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明實相之理。",
        "from": "T85n2776_001:0439b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖深固幽遠。",
        "from": "T85n2776_001:0439b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然由翻譯得旨遂使顯然。",
        "from": "T85n2776_001:0439b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此爰翻傳之得意也。",
        "from": "T85n2776_001:0439b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此第四彰注解所以。",
        "from": "T85n2776_001:0439b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻譯既明理雖易見。",
        "from": "T85n2776_001:0439b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳之未悟猶恐難通。",
        "from": "T85n2776_001:0439b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故須注解以開後學。",
        "from": "T85n2776_001:0439b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "T85n2776_001:0439b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初述謙辭。",
        "from": "T85n2776_001:0439b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明注意　初中余以闇短者余我也。",
        "from": "T85n2776_001:0439b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為也。",
        "from": "T85n2776_001:0439b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闇謂愚闇。",
        "from": "T85n2776_001:0439b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "短謂短淺也　時預聽次者。",
        "from": "T85n2776_001:0439b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂參預也。",
        "from": "T85n2776_001:0439b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "什法師譯經之時。",
        "from": "T85n2776_001:0439b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨講肇公親承德音。",
        "from": "T85n2776_001:0439b14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云時預聽次也　雖思乏參玄者。",
        "from": "T85n2776_001:0439b14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思者智思也。",
        "from": "T85n2776_001:0439b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乏者少也。",
        "from": "T85n2776_001:0439b15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參者涉也。",
        "from": "T85n2776_001:0439b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄者實相理也。",
        "from": "T85n2776_001:0439b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂心不悟理故云也　然麁得文意者。",
        "from": "T85n2776_001:0439b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言雖非精詣而粗知指歸耳　輒順所聞為之注解者。",
        "from": "T85n2776_001:0439b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒謂自專也。",
        "from": "T85n2776_001:0439b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為者作也。",
        "from": "T85n2776_001:0439b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略記成言述而不作者。",
        "from": "T85n2776_001:0439b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記謂記錄。",
        "from": "T85n2776_001:0439b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠言有二。",
        "from": "T85n2776_001:0439b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作成字。",
        "from": "T85n2776_001:0439b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成立此經。",
        "from": "T85n2776_001:0439b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經之言或作誠字。",
        "from": "T85n2776_001:0439b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成者實也當也。",
        "from": "T85n2776_001:0439b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記什公誠當之言以解此經也　述而無作者。",
        "from": "T85n2776_001:0439b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論語云。",
        "from": "T85n2776_001:0439b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述而無作信而好古。",
        "from": "T85n2776_001:0439b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意明唯聖作法余但述古人之言。",
        "from": "T85n2776_001:0439b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非敢自作也。",
        "from": "T85n2776_001:0439b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明注解所意　庶將來君子異世同焉者。",
        "from": "T85n2776_001:0439b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶望也。",
        "from": "T85n2776_001:0439b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將來謂當來也。",
        "from": "T85n2776_001:0439b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君子簡異小人。",
        "from": "T85n2776_001:0439b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老子云。",
        "from": "T85n2776_001:0439b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上士聞道懃而行之。",
        "from": "T85n2776_001:0439b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中士聞道若存若亡。",
        "from": "T85n2776_001:0439b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下士聞道而大笑之。",
        "from": "T85n2776_001:0439b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小人既不能奉行。",
        "from": "T85n2776_001:0439b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故但言君子。",
        "from": "T85n2776_001:0439b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此言不必簡棄意。",
        "from": "T85n2776_001:0439b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲勸勉令自強耳。",
        "from": "T85n2776_001:0439b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異世同聞者雖現世未來時後俗易聞經證悟獲益不殊故云也。",
        "from": "T85n2776_001:0439b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余以大歷二年春正月於資聖寺傳經之次記其所聞以補多忘。",
        "from": "T85n2776_001:0439c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶來悟義伯無誚斐然矣。",
        "from": "T85n2776_001:0439c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇福寺沙門體請記",
        "from": "T85n2776_001:0439c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋肇序略分四",
        "from": "T85n2776_001:0439c06_0",
        "context_with_next_sentence": true
    },
    {
