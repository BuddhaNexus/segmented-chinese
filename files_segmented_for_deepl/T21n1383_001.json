[
    {
        "source_sentence": "佛說宿命智陀羅尼經",
        "from": "T21n1383_001:0904b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1383_001:0904b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1383_001:0904b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告阿難言。",
        "from": "T21n1383_001:0904b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有陀羅尼名宿命智。",
        "from": "T21n1383_001:0904b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生聞是陀羅尼。",
        "from": "T21n1383_001:0904b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能志心受持者。",
        "from": "T21n1383_001:0904b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有千劫之中極重罪業皆悉消滅。",
        "from": "T21n1383_001:0904b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能終身不間斷者。",
        "from": "T21n1383_001:0904b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人於七俱胝生常知宿命。",
        "from": "T21n1383_001:0904b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1383_001:0904b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨(引)囉怛那(二合)室詰泥(去聲呼下同一)怛他(引)誐多(引)野(二)阿囉曷(二合)帝(引)三藐訖三(二合)沒馱(引)野(三)怛[寧*也]他(引四)唵(引)囉怛泥(二合)囉怛泥(二合五)蘇囉怛泥(二合六)囉怛努(二合引)訥婆(二合)味(引七)摩賀(引)囉怛那(二合)枳囉尼(去聲八)囉怛那(二合)三婆味(引)娑嚩(二合引)賀(引九)爾時阿難聞佛宣說。",
        "from": "T21n1383_001:0904b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生得宿命智陀羅尼已。",
        "from": "T21n1383_001:0904b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎未曾有歡喜無量。",
        "from": "T21n1383_001:0904b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以頭頂禮佛而退。",
        "from": "T21n1383_001:0904b19_3",
        "context_with_next_sentence": true
    },
