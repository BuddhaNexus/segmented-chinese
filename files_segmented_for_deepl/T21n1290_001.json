[
    {
        "source_sentence": "焰羅王供行法次第",
        "from": "T21n1290_001:0374a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿謨伽三藏撰",
        "from": "T21n1290_001:0374a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者若欲修是法者。",
        "from": "T21n1290_001:0374a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應知是王五變之身並其大宮一一緣起。",
        "from": "T21n1290_001:0374a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其五變者。",
        "from": "T21n1290_001:0374a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者焰羅法王。",
        "from": "T21n1290_001:0374a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即本號也。",
        "from": "T21n1290_001:0374a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者死王。",
        "from": "T21n1290_001:0374a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者黃泉國善賀羅王。",
        "from": "T21n1290_001:0374a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者料罪忿怒王。",
        "from": "T21n1290_001:0374a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者檀拏少忿怒王。",
        "from": "T21n1290_001:0374a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本宮在鐵圍山之北地中。",
        "from": "T21n1290_001:0374a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即冥道宮也。",
        "from": "T21n1290_001:0374a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五萬眷屬而為圍繞。",
        "from": "T21n1290_001:0374a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宮中庭有檀拏幢。",
        "from": "T21n1290_001:0374a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其頭有一少忿怒之面。",
        "from": "T21n1290_001:0374a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王常見其面知人間罪輕重善惡。",
        "from": "T21n1290_001:0374a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間有作重罪之者。",
        "from": "T21n1290_001:0374a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從其口出火光光中黑繩涌出警覺。",
        "from": "T21n1290_001:0374a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見木札知其姓名料記之。",
        "from": "T21n1290_001:0374a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有作善之者。",
        "from": "T21n1290_001:0374a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白蓮花從口開敷。",
        "from": "T21n1290_001:0374a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其香普薰大山府君五道將軍王。",
        "from": "T21n1290_001:0374a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常奉王教能定善惡。",
        "from": "T21n1290_001:0374a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡欲修是法時設供物。",
        "from": "T21n1290_001:0374a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國王王子及百宦宰相等人民。",
        "from": "T21n1290_001:0374a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨人應設供物。",
        "from": "T21n1290_001:0374a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡麻油五穀紙錢幣帛香藥等用之。",
        "from": "T21n1290_001:0374a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘇蜜安善那香藥等。",
        "from": "T21n1290_001:0374a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入粥和合可煮之。",
        "from": "T21n1290_001:0374a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求露地閑靜之處。",
        "from": "T21n1290_001:0374a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜修供不知意人見之。",
        "from": "T21n1290_001:0374a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楊枝五尺以是教其位。",
        "from": "T21n1290_001:0374a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法疫病氣病一切病惱時。",
        "from": "T21n1290_001:0374a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜修兼能修之。",
        "from": "T21n1290_001:0374a27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正報盡付死籍。",
        "from": "T21n1290_001:0374a27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能乞王削死籍付生籍。",
        "from": "T21n1290_001:0374a28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到疫病之家。",
        "from": "T21n1290_001:0374a28_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多誦大山府君呪。",
        "from": "T21n1290_001:0374a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者著座塗香摩手臂。",
        "from": "T21n1290_001:0374b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無釋迦牟尼如來御名七遍可誦之。",
        "from": "T21n1290_001:0374b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香水灑地上(用竹葉)加持香水。",
        "from": "T21n1290_001:0374b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0374b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　阿　蜜利　帝　賀　曩　賀　曩　吽　娑縛(二合)賀(引)供師運一念離自他之異故曰無遮心。",
        "from": "T21n1290_001:0374b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕怨親之念號平等。",
        "from": "T21n1290_001:0374b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能行是法是菩薩行廣大之願。",
        "from": "T21n1290_001:0374b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能運是慈。",
        "from": "T21n1290_001:0374b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是如來慈。",
        "from": "T21n1290_001:0374b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸福之王。",
        "from": "T21n1290_001:0374b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在三檀之上者。",
        "from": "T21n1290_001:0374b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良由佛說無盡威德自在光明勝妙真言加持之力也。",
        "from": "T21n1290_001:0374b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令一食為無量食。",
        "from": "T21n1290_001:0374b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又使一財成無盡財。",
        "from": "T21n1290_001:0374b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一財食量同法界。",
        "from": "T21n1290_001:0374b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普施有情。",
        "from": "T21n1290_001:0374b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆充足甘露法食。",
        "from": "T21n1290_001:0374b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法食充飽罪滅福生。",
        "from": "T21n1290_001:0374b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離惡趣身受人天報。",
        "from": "T21n1290_001:0374b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令施主增益壽命消除業障。",
        "from": "T21n1290_001:0374b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得滿足檀波羅蜜現招勝果當證菩提。",
        "from": "T21n1290_001:0374b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙力難思信而不惑。",
        "from": "T21n1290_001:0374b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日施主(某甲)奉為皇帝宰輔及法界有情。",
        "from": "T21n1290_001:0374b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普設無遮廣大供養。",
        "from": "T21n1290_001:0374b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先從諸佛菩薩金剛天等。",
        "from": "T21n1290_001:0374b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至鬼類冥道諸餓鬼僧尼靈等。",
        "from": "T21n1290_001:0374b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記其名籍上。",
        "from": "T21n1290_001:0374b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一立壇上。",
        "from": "T21n1290_001:0374b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以供物置籍前。",
        "from": "T21n1290_001:0374b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當誦甘露王真言。",
        "from": "T21n1290_001:0374b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持供物觀想。",
        "from": "T21n1290_001:0374b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手掌內有字。",
        "from": "T21n1290_001:0374b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是字流出甘露水。",
        "from": "T21n1290_001:0374b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充滿諸供物等。",
        "from": "T21n1290_001:0374b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑淨淨水真言",
        "from": "T21n1290_001:0374b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日羅(二合)　舍　儞　吽　泮　吒已上香水以竹枝灑之。",
        "from": "T21n1290_001:0374b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若露地修是法。",
        "from": "T21n1290_001:0374b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿向桃柳之本。",
        "from": "T21n1290_001:0374b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次可請諸佛菩薩。",
        "from": "T21n1290_001:0374c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請本師釋迦牟尼佛。",
        "from": "T21n1290_001:0374c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請世間廣大威德自在明神。",
        "from": "T21n1290_001:0374c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請西方極樂世界阿彌陀佛。",
        "from": "T21n1290_001:0374c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請當來下生彌勒尊佛。",
        "from": "T21n1290_001:0374c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請盡虛空界一切諸佛。",
        "from": "T21n1290_001:0374c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請大聖文殊師利菩薩摩訶薩。",
        "from": "T21n1290_001:0374c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請大聖普賢菩薩摩訶薩。",
        "from": "T21n1290_001:0374c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請大悲觀世音菩薩摩訶薩。",
        "from": "T21n1290_001:0374c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請大勢至菩薩摩訶薩。",
        "from": "T21n1290_001:0374c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請藥王藥上菩薩摩訶薩。",
        "from": "T21n1290_001:0374c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請除蓋障菩薩摩訶薩。",
        "from": "T21n1290_001:0374c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請地藏菩薩摩訶薩。",
        "from": "T21n1290_001:0374c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請虛空藏菩薩摩訶薩。",
        "from": "T21n1290_001:0374c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請金剛藏菩薩摩訶薩。",
        "from": "T21n1290_001:0374c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請十方盡虛空界菩薩摩訶薩。",
        "from": "T21n1290_001:0374c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請十方盡虛空界聲聞緣覺一切賢聖。",
        "from": "T21n1290_001:0374c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請一切護法金剛密迹諸善神眾。",
        "from": "T21n1290_001:0374c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願本師釋迦牟尼如來。",
        "from": "T21n1290_001:0374c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及十方盡虛空遍法界一切諸佛諸大菩薩摩訶薩。",
        "from": "T21n1290_001:0374c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切賢聖眾今日今時不捨弘願。",
        "from": "T21n1290_001:0374c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾生故受我等請。",
        "from": "T21n1290_001:0374c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降臨此道場。",
        "from": "T21n1290_001:0374c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受今施主(某甲)所獻供養。",
        "from": "T21n1290_001:0374c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當承以召請真言召請冥道。",
        "from": "T21n1290_001:0374c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願三寶哀愍納受護持(某甲)消除災難。",
        "from": "T21n1290_001:0375a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是人正報盡雖付死籍。",
        "from": "T21n1290_001:0375a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王垂慈悲方便削死籍。",
        "from": "T21n1290_001:0375a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如大誓即付生籍。",
        "from": "T21n1290_001:0375a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命百歲常見百秋(云云)。",
        "from": "T21n1290_001:0375a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦諸佛菩薩攝招真言曰。",
        "from": "T21n1290_001:0375a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱南阿(引)薩縛怛羅(二合)鉢囉(二合)底訶跢怛他(引)蘗黨(引)矩捨冐地左哩也(二合)跛哩布羅迦娑嚩(二合)訶印二羽忿怒縛。",
        "from": "T21n1290_001:0375a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二風屈如鉤。",
        "from": "T21n1290_001:0375a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請了即獻供物。",
        "from": "T21n1290_001:0375a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先釋迦。",
        "from": "T21n1290_001:0375a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次普賢文殊(若用王法者請佛菩薩次第可供之)次可請梵天帝釋及四天(印金剛合掌稱名)四天王每座有一鬼其名東方健達婆王。",
        "from": "T21n1290_001:0375a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方俱盤荼王。",
        "from": "T21n1290_001:0375a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方諸龍。",
        "from": "T21n1290_001:0375a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方二十八大藥叉。",
        "from": "T21n1290_001:0375a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供了次大梵天。",
        "from": "T21n1290_001:0375a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋四王印真言。",
        "from": "T21n1290_001:0375a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四王通心呪印",
        "from": "T21n1290_001:0375a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手大指。",
        "from": "T21n1290_001:0375a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中指小指皆立向上。",
        "from": "T21n1290_001:0375a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈頭指無名指。",
        "from": "T21n1290_001:0375a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拳著掌上。",
        "from": "T21n1290_001:0375a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手掌向前。",
        "from": "T21n1290_001:0375a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈肘向上。",
        "from": "T21n1290_001:0375a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰。",
        "from": "T21n1290_001:0375a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)漸婆羅(二)謝輦陀羅夜(三)莎嚩(去聲)訶(四)梵天印左手作拳按腰。",
        "from": "T21n1290_001:0375a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手五指相竪。",
        "from": "T21n1290_001:0375a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著之少屈高過肩。",
        "from": "T21n1290_001:0375a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀有掌內蓮華。",
        "from": "T21n1290_001:0375a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0375a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵沒羅(二合)訶麼(二合)寧娑嚩(二合)訶次帝釋天印。",
        "from": "T21n1290_001:0375a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手同前安腰。",
        "from": "T21n1290_001:0375a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手五指直竪。",
        "from": "T21n1290_001:0375a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相著地水二指。",
        "from": "T21n1290_001:0375a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈中節以風著火背。",
        "from": "T21n1290_001:0375a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空屈中節。",
        "from": "T21n1290_001:0375a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0375a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵因捺囉(二合)野娑嚩(二合)訶焰魔檀陀呼召印真言以兩手中指無名指小指正相叉。",
        "from": "T21n1290_001:0375a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指竪頭相拄。",
        "from": "T21n1290_001:0375a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大母指各附二頭指側。",
        "from": "T21n1290_001:0375a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開掌如掬水法。",
        "from": "T21n1290_001:0375a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大母指來去。",
        "from": "T21n1290_001:0375b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0375b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跢姪他(一)唵(二)焰魔檀馱耶(三)尸朋迦唎尼(四)跋折唎杜堤(五)[瑮-木+土]醯[瑮-木+土]醯(六)莎縛(二合)賀(引七)閻羅王法身印　屈左手三指。",
        "from": "T21n1290_001:0375b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍稱出頭指三分許。",
        "from": "T21n1290_001:0375b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指博。",
        "from": "T21n1290_001:0375b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "附著頭指下節文。",
        "from": "T21n1290_001:0375b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指來去。",
        "from": "T21n1290_001:0375b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0375b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)焰魔羅闍(二)鳥揭囉(去聲)毘[口*梨](二合)耶(三)阿揭車(四)莎縛(二合)訶(五)若用是法印呪作大壇。",
        "from": "T21n1290_001:0375b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供一切諸佛天等。",
        "from": "T21n1290_001:0375b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結是印七遍。",
        "from": "T21n1290_001:0375b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪其焰魔羅王即來受是供。",
        "from": "T21n1290_001:0375b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大歡喜。",
        "from": "T21n1290_001:0375b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次請五道將軍王。",
        "from": "T21n1290_001:0375b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌稱名。",
        "from": "T21n1290_001:0375b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰五道將軍王左司命右司命。",
        "from": "T21n1290_001:0375b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次請天曹府君一切天曹百司官屬都官使者及諸部類。",
        "from": "T21n1290_001:0375b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降臨此壇場受我供養。",
        "from": "T21n1290_001:0375b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地府神君平等大王一切地府百司官屬都官使者諸司部類。",
        "from": "T21n1290_001:0375b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降臨壇場受我供養。",
        "from": "T21n1290_001:0375b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "典主地獄三十六主馬頭羅剎牛頭羅剎等諸眷屬。",
        "from": "T21n1290_001:0375b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降臨此壇場受我供養。",
        "from": "T21n1290_001:0375b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地主明王山川岳瀆。",
        "from": "T21n1290_001:0375b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城隍社廟一切神眾各與眷屬。",
        "from": "T21n1290_001:0375b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願到道場受我供養。",
        "from": "T21n1290_001:0375b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今過僧尼未解脫者。",
        "from": "T21n1290_001:0375b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施主先亡七代久遠。",
        "from": "T21n1290_001:0375b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魂靈及無始時來冤家債主。",
        "from": "T21n1290_001:0375b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降臨此道場受我供養。",
        "from": "T21n1290_001:0375b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曠野大力燒面大王無量百千萬億那由他恒河沙諸餓鬼等。",
        "from": "T21n1290_001:0375b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各與眷屬降臨此道場。",
        "from": "T21n1290_001:0375b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受我供養。",
        "from": "T21n1290_001:0375b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命三寶。",
        "from": "T21n1290_001:0375b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次召諸餓鬼真言(以右手大母指捻中指頭餘三指微屈即成彈指聲)。",
        "from": "T21n1290_001:0375b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0375b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵部布(入)哩迦哩怛哩怛他(引)揭多夜次誦開喉印真言(印不散前印)。",
        "from": "T21n1290_001:0375b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0375c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵部布(入)帝哩迦哆哩怛他揭多(引)夜請了結鉤索鎖鈴印次光澤諸供物印(用三股印)。",
        "from": "T21n1290_001:0375c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1290_001:0375c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵入嚩(二合)囉也滿度哩莎嚩(二合)訶次以竹葉灑淨香水。",
        "from": "T21n1290_001:0375c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦甘露真言曰。",
        "from": "T21n1290_001:0375c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展右手於右肩上並眾指開中。",
        "from": "T21n1290_001:0375c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念三七遍。",
        "from": "T21n1290_001:0375c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨蘇盧婆也(一)怛他揭多也(二)怛儞也他(三)唵(四)蘇盧蘇盧婆羅蘇盧婆羅蘇盧莎嚩(二合)賀次念毘盧舍那心。",
        "from": "T21n1290_001:0375c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉觀乳海真言。",
        "from": "T21n1290_001:0375c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展右手五指向下。",
        "from": "T21n1290_001:0375c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨食器中即成。",
        "from": "T21n1290_001:0375c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想鑁字在於掌中。",
        "from": "T21n1290_001:0375c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨三滿多沒馱南鑁",
        "from": "T21n1290_001:0375c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次是等真言。",
        "from": "T21n1290_001:0375c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令供物微妙味。",
        "from": "T21n1290_001:0375c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次可請太山府君。",
        "from": "T21n1290_001:0375c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是王住宅。",
        "from": "T21n1290_001:0375c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山後有勇猛鬼王。",
        "from": "T21n1290_001:0375c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那間遊行世界。",
        "from": "T21n1290_001:0375c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行木札之病(木札者疫病之異名也)以金剛合掌。",
        "from": "T21n1290_001:0375c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可誦真言。",
        "from": "T21n1290_001:0375c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多沒馱喃(引)只怛羅(二合)虞鉢多(二合)野莎嚩(二合)賀次可請供諸冥道。",
        "from": "T21n1290_001:0375c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次至心唱五如來之號。",
        "from": "T21n1290_001:0375c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆誐嚩帝鉢囉(二合)保陀囉怛曩(二合)耶怛侘誐哆(引)耶曩謨寶勝如來除慳貪業福德圓滿。",
        "from": "T21n1290_001:0375c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆誐嚩帝蘇嚕婆耶怛侘誐哆(引)耶曩謨妙色身如來破醜陋形相好圓滿。",
        "from": "T21n1290_001:0375c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆誐嚩帝阿密[口*栗](二合)帝羅闍耶　怛宅誐哆(引)耶曩謨甘露王如來灌法身心令受快樂。",
        "from": "T21n1290_001:0375c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆誐嚩帝尾補攞誐怛羅(二合)耶怛侘誐哆(引)耶曩謨廣博身如來咽喉寬大受妙味。",
        "from": "T21n1290_001:0376a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨婆誐嚩帝阿婆延迦羅耶怛侘誐哆(引)耶曩謨離怖畏如來恐怖悉除離餓鬼趣。",
        "from": "T21n1290_001:0376a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金剛合掌當奉請地藏菩薩。",
        "from": "T21n1290_001:0376a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願以慈悲令一切冥道次第無令失所。",
        "from": "T21n1290_001:0376a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金剛合掌可誦。",
        "from": "T21n1290_001:0376a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "某甲等謹以香潔飲食及錢財幣帛等。",
        "from": "T21n1290_001:0376a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先奉獻十方諸佛百千俱胝萬億那由侘不可說不可說國土微塵等一切冥宦冥道僧尼靈界五百餓鬼眾半天婆羅門諸餓鬼眾。",
        "from": "T21n1290_001:0376a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一各得摩伽陀國十六斛食。",
        "from": "T21n1290_001:0376a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令此食悉皆變為法喜禪悅甘露醍醐清淨乳海。",
        "from": "T21n1290_001:0376a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充遍法界。",
        "from": "T21n1290_001:0376a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大無量無不飽滿。",
        "from": "T21n1290_001:0376a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆證得解脫菩提。",
        "from": "T21n1290_001:0376a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命常住三寶。",
        "from": "T21n1290_001:0376a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金剛合掌。",
        "from": "T21n1290_001:0376a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚誦曰。",
        "from": "T21n1290_001:0376a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿(引)演覩(引)泥嚩左誐素羅(一)緊那羅那羅乞鑠迦羅(二合)那野(二)鉢囉(二合)嚩囉(二合)達麼蘖哩(二合)多地伽羅(二合三)尾達麼左鉢羅捨麼操企也(二合四)儞銘(二合)多部多銘多婆羅迦捨夜(五)怛儞賀室羅(二合)摩拏也馱(引)[牟*含](引)次唱懺悔偈曰今日(某甲)所設供具。",
        "from": "T21n1290_001:0376a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多不如法。",
        "from": "T21n1290_001:0376a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可咲麁惡。",
        "from": "T21n1290_001:0376a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惱亂一切冥宦冥道檀吉爾眾。",
        "from": "T21n1290_001:0376a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥道唯願。",
        "from": "T21n1290_001:0376a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令許唯願慈悲布施歡喜。",
        "from": "T21n1290_001:0376a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次若欲消除疫病氣病瘧病者。",
        "from": "T21n1290_001:0376a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可供大山府君。",
        "from": "T21n1290_001:0376a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解脫惡人怨家呪咀者。",
        "from": "T21n1290_001:0376a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又別可供大梵天王四天王位即得解脫。",
        "from": "T21n1290_001:0376a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲得福德者。",
        "from": "T21n1290_001:0376a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可別供二十八大藥叉(毘沙門眷屬也)若欲拔濟正報之命者。",
        "from": "T21n1290_001:0376a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可別供焰羅王五道將軍。",
        "from": "T21n1290_001:0376a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得削死籍付生籍。",
        "from": "T21n1290_001:0376a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總一切任行者之意。",
        "from": "T21n1290_001:0376b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但錢幣帛等不須供養。",
        "from": "T21n1290_001:0376b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨召請當所龍神一切靈等可供養(別座)一切隨意。",
        "from": "T21n1290_001:0376b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以新衣壇中穿一穴置新衣。",
        "from": "T21n1290_001:0376b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每時時以焰魔王真言從壇出。",
        "from": "T21n1290_001:0376b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煎餅五穀粥。",
        "from": "T21n1290_001:0376b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加諸香花和水淨器。",
        "from": "T21n1290_001:0376b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以歡喜心四方散之。",
        "from": "T21n1290_001:0376b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從四鬼。",
        "from": "T21n1290_001:0376b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切鬼等歡喜納受。",
        "from": "T21n1290_001:0376b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而後可讀大乘經。",
        "from": "T21n1290_001:0376b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焰魔供次第一卷",
        "from": "T21n1290_001:0376b08_0",
        "context_with_next_sentence": false
    }
]