[
    {
        "source_sentence": "圓覺經佚文",
        "from": "X01n0001_001:0001a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余嚮偶獲古宋本大方廣圓覺修多羅了義經下卷一帖。",
        "from": "X01n0001_001:0001a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一紙廿行。",
        "from": "X01n0001_001:0001a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行十二字。",
        "from": "X01n0001_001:0001a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經末有左藏庫西潘閬巷(一行)內李三二郎印行(二行)之記。",
        "from": "X01n0001_001:0001a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今撿尋其文。",
        "from": "X01n0001_001:0001a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝善男子當獲來世是修行者。",
        "from": "X01n0001_001:0001a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無令惡魔及諸外道惱其身心。",
        "from": "X01n0001_001:0001a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令生退屈之下。",
        "from": "X01n0001_001:0001a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有爾時世尊(乃至)無令生退屈等一百一十三言。",
        "from": "X01n0001_001:0001a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此現存諸藏本所無也按此經文。",
        "from": "X01n0001_001:0001a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓覺會中有十二菩薩。",
        "from": "X01n0001_001:0001a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各從座起發法問。",
        "from": "X01n0001_001:0001a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛亦各答之之事。",
        "from": "X01n0001_001:0001a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而經先以長行詳述。",
        "from": "X01n0001_001:0001a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而後以偈重說之。",
        "from": "X01n0001_001:0001a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然至於敘最後起座賢善首菩薩與佛問答。",
        "from": "X01n0001_001:0001a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有長行而無偈。",
        "from": "X01n0001_001:0001a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文體既不一。",
        "from": "X01n0001_001:0001a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃其為誤脫可知耳。",
        "from": "X01n0001_001:0001a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為看舊藏經者具錄其文于左云爾。",
        "from": "X01n0001_001:0001a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明治辛亥歲十二月　　　　松本文識爾時世尊。",
        "from": "X01n0001_001:0001a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲重宣此義。",
        "from": "X01n0001_001:0001a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "X01n0001_001:0001a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　賢善首當知　　是經諸佛說　　如來等護持　十二部眼目　　名為大方廣　　圓覺陀羅尼　顯如來境界　　依此修行者　　增進至佛地　如海納百川　　飲者皆充滿　　假使施七寶　積滿三千界　　不如聞此經　　若化河沙眾　皆得阿羅漢　　不如聞半偈　　汝等於來世　護是宣持者　　無令生退屈",
        "from": "X01n0001_001:0001a19_0",
        "context_with_next_sentence": false
    }
]