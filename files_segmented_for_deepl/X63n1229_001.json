[
    {
        "source_sentence": "定慧相資歌",
        "from": "X63n1229_001:0080b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖教宗中有二門。",
        "from": "X63n1229_001:0080b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度萬行稱為尊。",
        "from": "X63n1229_001:0080b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初名止觀助新學。",
        "from": "X63n1229_001:0080b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後成定慧菩提根。",
        "from": "X63n1229_001:0080b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯一法似雙分。",
        "from": "X63n1229_001:0080b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法性寂然體真止。",
        "from": "X63n1229_001:0080b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂而常照妙觀存。",
        "from": "X63n1229_001:0080b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定為父慧為母。",
        "from": "X63n1229_001:0080b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能孕千聖之門戶。",
        "from": "X63n1229_001:0080b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長根力養聖胎。",
        "from": "X63n1229_001:0080b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念出生成佛祖。",
        "from": "X63n1229_001:0080b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定為將慧為相。",
        "from": "X63n1229_001:0080b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能弼心王成無上。",
        "from": "X63n1229_001:0080b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永作群生證道門。",
        "from": "X63n1229_001:0080b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是古佛菩提樣。",
        "from": "X63n1229_001:0080b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定如月光爍外道邪星滅。",
        "from": "X63n1229_001:0080b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能挑智炬轉分明。",
        "from": "X63n1229_001:0080b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滋潤道芽除愛結。",
        "from": "X63n1229_001:0080b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧如日照破無明之暗室。",
        "from": "X63n1229_001:0080b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令邪見愚夫禪。",
        "from": "X63n1229_001:0080b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡成般若波羅蜜。",
        "from": "X63n1229_001:0080b15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少時默剎那靜。",
        "from": "X63n1229_001:0080b15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸漸增修成正定。",
        "from": "X63n1229_001:0080b15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸聖較量功不多。",
        "from": "X63n1229_001:0080b16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終見靈臺之妙性。",
        "from": "X63n1229_001:0080b16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞥聞法纔歷耳。",
        "from": "X63n1229_001:0080b16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能熏識藏覺種起。",
        "from": "X63n1229_001:0080b17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念回光正智開。",
        "from": "X63n1229_001:0080b17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾成佛法如是。",
        "from": "X63n1229_001:0080b17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定力不思義。",
        "from": "X63n1229_001:0080b18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變凡為聖剎那時。",
        "from": "X63n1229_001:0080b18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊生死根由斷。",
        "from": "X63n1229_001:0080b18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積劫塵勞巢穴隳。",
        "from": "X63n1229_001:0080b19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "湛心水淨意湛。",
        "from": "X63n1229_001:0080b19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光吞萬像爍千途。",
        "from": "X63n1229_001:0080b19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抉開己眼無瑕翳。",
        "from": "X63n1229_001:0080b20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界元無一法拘。",
        "from": "X63n1229_001:0080b20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺觀賊應時剋。",
        "from": "X63n1229_001:0080b20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攀緣病倐然淨。",
        "from": "X63n1229_001:0080b21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蕩念垢兮洗惑塵。",
        "from": "X63n1229_001:0080b21_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯法身兮堅慧命。",
        "from": "X63n1229_001:0080b21_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斷山若停海。",
        "from": "X63n1229_001:0080b22_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天翻地覆終無改。",
        "from": "X63n1229_001:0080b22_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑩似琉璃含寶月。",
        "from": "X63n1229_001:0080b22_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倐然無寄而無待。",
        "from": "X63n1229_001:0080b23_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若慧莫能量。",
        "from": "X63n1229_001:0080b23_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然隨處現心光。",
        "from": "X63n1229_001:0080b23_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬行門中為導首。",
        "from": "X63n1229_001:0080b24_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切時中稱法王。",
        "from": "X63n1229_001:0080b24_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竭苦海碎邪山。",
        "from": "X63n1229_001:0080b24_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄雲卷盡片時間。",
        "from": "X63n1229_001:0080c01_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧女室中金頓現。",
        "from": "X63n1229_001:0080c01_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壯士額上珠潛還。",
        "from": "X63n1229_001:0080c01_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斬癡網截欲流。",
        "from": "X63n1229_001:0080c02_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大雄威猛更無儔。",
        "from": "X63n1229_001:0080c02_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令鐵牀銅柱冷。",
        "from": "X63n1229_001:0080c02_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓使魔怨業果休。",
        "from": "X63n1229_001:0080c03_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和諍訟成孝義。",
        "from": "X63n1229_001:0080c03_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普現群生諸佛智。",
        "from": "X63n1229_001:0080c03_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邊邪惡慧盡朝宗。",
        "from": "X63n1229_001:0080c04_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "螻蟻鯤鵬齊受記。",
        "from": "X63n1229_001:0080c04_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏修定純陰。",
        "from": "X63n1229_001:0080c04_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爛物刳正命。",
        "from": "X63n1229_001:0080c05_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若將正慧照禪那。",
        "from": "X63n1229_001:0080c05_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然萬法明如鏡。",
        "from": "X63n1229_001:0080c05_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏修慧純陽。",
        "from": "X63n1229_001:0080c06_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枯物成迂滯。",
        "from": "X63n1229_001:0080c06_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須憑妙定助觀門。",
        "from": "X63n1229_001:0080c06_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如月分明除霧翳。",
        "from": "X63n1229_001:0080c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸等學莫偏修。",
        "from": "X63n1229_001:0080c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從來一體無二頭。",
        "from": "X63n1229_001:0080c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似禽兩翼飛空界。",
        "from": "X63n1229_001:0080c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如車二輪乘白牛。",
        "from": "X63n1229_001:0080c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即向凡途登覺岸。",
        "from": "X63n1229_001:0080c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於業海泛慈舟。",
        "from": "X63n1229_001:0080c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或事定制之一處無不竟。",
        "from": "X63n1229_001:0080c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或理定唯當直下觀心性。",
        "from": "X63n1229_001:0080c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或事觀明諸法相生籌筭。",
        "from": "X63n1229_001:0080c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或理觀頓了無一無那畔。",
        "from": "X63n1229_001:0080c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定即慧非一非二非心計。",
        "from": "X63n1229_001:0080c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧即定不同不別絕觀聽。",
        "from": "X63n1229_001:0080c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或雙運即寂而照通真訓。",
        "from": "X63n1229_001:0080c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或俱泯非定非慧超常準。",
        "from": "X63n1229_001:0080c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一塵入定眾塵起。",
        "from": "X63n1229_001:0080c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若門中成法爾。",
        "from": "X63n1229_001:0080c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子身中三昧時。",
        "from": "X63n1229_001:0080c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老人身分談真軌。",
        "from": "X63n1229_001:0080c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能觀一境萬境同。",
        "from": "X63n1229_001:0080c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近塵遠剎無不通。",
        "from": "X63n1229_001:0080c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如路上論生死。",
        "from": "X63n1229_001:0080c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明海裏演圓宗。",
        "from": "X63n1229_001:0080c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼根能作鼻佛事。",
        "from": "X63n1229_001:0080c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色塵入定香塵起。",
        "from": "X63n1229_001:0080c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心境常同見自差。",
        "from": "X63n1229_001:0080c16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰言不修波元水。",
        "from": "X63n1229_001:0080c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非寂非照絕言思。",
        "from": "X63n1229_001:0080c17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而寂而照功無比。",
        "from": "X63n1229_001:0080c17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權實雙行闡正途。",
        "from": "X63n1229_001:0080c18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體用更資含妙旨。",
        "from": "X63n1229_001:0080c18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸諸子勿虗棄。",
        "from": "X63n1229_001:0080c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光陰如箭如流水。",
        "from": "X63n1229_001:0080c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散亂全因缺定門。",
        "from": "X63n1229_001:0080c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚盲祇為虧真智。",
        "from": "X63n1229_001:0080c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實言須入耳。",
        "from": "X63n1229_001:0080c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千經萬論同標記。",
        "from": "X63n1229_001:0080c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧全功不暫忘。",
        "from": "X63n1229_001:0080c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念頓歸真覺地。",
        "from": "X63n1229_001:0080c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定須習慧須聞。",
        "from": "X63n1229_001:0080c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿使靈臺一點昏。",
        "from": "X63n1229_001:0080c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合抱之樹生毫末。",
        "from": "X63n1229_001:0080c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積漸之功成寶尊。",
        "from": "X63n1229_001:0080c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獼猴學定生天界。",
        "from": "X63n1229_001:0080c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女子纔思入道門。",
        "from": "X63n1229_001:0080c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自利利他因",
        "from": "X63n1229_001:0080c23_5",
        "context_with_next_sentence": false
    }
]