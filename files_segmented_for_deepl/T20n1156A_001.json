[
    {
        "source_sentence": "大隨求即得大陀羅尼明王懺悔",
        "from": "T20n1156A_001:0649b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法",
        "from": "T20n1156A_001:0649b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨求八印",
        "from": "T20n1156A_001:0649b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一懺悔印　亦名菩提心印　仰兩手。",
        "from": "T20n1156A_001:0649b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手無名指。",
        "from": "T20n1156A_001:0649b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繞於中指後。",
        "from": "T20n1156A_001:0649b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭指句無名指頭。",
        "from": "T20n1156A_001:0649b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手如之。",
        "from": "T20n1156A_001:0649b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左右手大指。",
        "from": "T20n1156A_001:0649b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各捻小指甲上。",
        "from": "T20n1156A_001:0649b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中指頭相柱仰掌向上稍當心誦呪。",
        "from": "T20n1156A_001:0649b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二菩提根本契　亦名授記頂契印　準前印。",
        "from": "T20n1156A_001:0649b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改小母掌內交。",
        "from": "T20n1156A_001:0649c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大母指左押右各捻本。",
        "from": "T20n1156A_001:0649c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小母指押甲上。",
        "from": "T20n1156A_001:0649c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指捻中指背上節文。",
        "from": "T20n1156A_001:0649c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三如來平等契　亦名施清涼契印　右手頭指以下三指直申。",
        "from": "T20n1156A_001:0649c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大母捻小指背第一文。",
        "from": "T20n1156A_001:0649c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不言左手　如來清淨契　先左右手合掌。",
        "from": "T20n1156A_001:0649c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指相叉於掌內右押左。",
        "from": "T20n1156A_001:0649c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭已下三指合頭。",
        "from": "T20n1156A_001:0649c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大母指亦合頭。",
        "from": "T20n1156A_001:0649c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏於掌內。",
        "from": "T20n1156A_001:0649c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四如來消一切毒惡契　亦名一切歡喜契　依平等印。",
        "from": "T20n1156A_001:0649c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交腕右押左。",
        "from": "T20n1156A_001:0649c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰掌向上。",
        "from": "T20n1156A_001:0649c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若外有事。",
        "from": "T20n1156A_001:0649c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向外托之。",
        "from": "T20n1156A_001:0649c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是滅毒契。",
        "from": "T20n1156A_001:0649c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五名一切蟲得佛記契　先合掌二小指直竪。",
        "from": "T20n1156A_001:0649c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二無名指掌內屈。",
        "from": "T20n1156A_001:0649c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指右押左掌內反相叉。",
        "from": "T20n1156A_001:0649c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指各句二中指。",
        "from": "T20n1156A_001:0649c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指各捻頭指中文側。",
        "from": "T20n1156A_001:0649c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指竝曲勿著無名指。",
        "from": "T20n1156A_001:0649c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六祕密契　亦名心中印　先合掌以頭指無名指小指。",
        "from": "T20n1156A_001:0649c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反相叉掌內。",
        "from": "T20n1156A_001:0649c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大母指藏頭入掌內。",
        "from": "T20n1156A_001:0649c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各捻三指甲上。",
        "from": "T20n1156A_001:0649c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七解脫契　亦名護念十方契　先合掌當心。",
        "from": "T20n1156A_001:0649c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭指無名指小指。",
        "from": "T20n1156A_001:0649c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少屈於掌內令甲相背。",
        "from": "T20n1156A_001:0649c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大母指藏頭。",
        "from": "T20n1156A_001:0649c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入本掌內。",
        "from": "T20n1156A_001:0649c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻無名指中節側。",
        "from": "T20n1156A_001:0649c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中指平展節相背。",
        "from": "T20n1156A_001:0649c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八如來心契　先仰右掌以淨心觀之。",
        "from": "T20n1156A_001:0649c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大母指捻無名指中文側。",
        "from": "T20n1156A_001:0649c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四指把搼。",
        "from": "T20n1156A_001:0649c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸大眾。",
        "from": "T20n1156A_001:0649c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是懺悔者。",
        "from": "T20n1156A_001:0649c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從菩提生一切諸佛。",
        "from": "T20n1156A_001:0649c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心時。",
        "from": "T20n1156A_001:0649c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自取不劣不覆諸罪。",
        "from": "T20n1156A_001:0649c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即菩提心故。",
        "from": "T20n1156A_001:0649c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子當知此菩提心契不思議。",
        "from": "T20n1156A_001:0649c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1156A_001:0649c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念往昔修菩薩行。",
        "from": "T20n1156A_001:0649c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經無量劫積功累德。",
        "from": "T20n1156A_001:0649c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦過無量劫。",
        "from": "T20n1156A_001:0649c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是苦行修學。",
        "from": "T20n1156A_001:0649c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經千恒河沙劫。",
        "from": "T20n1156A_001:0649c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了無一記。",
        "from": "T20n1156A_001:0649c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1156A_001:0649c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為心劣故。",
        "from": "T20n1156A_001:0649c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為有餘罪。",
        "from": "T20n1156A_001:0649c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫懺謝皆不得盡。",
        "from": "T20n1156A_001:0650a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為懺不盡。",
        "from": "T20n1156A_001:0650a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致殃宿昝。",
        "from": "T20n1156A_001:0650a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉引前作諸障難。",
        "from": "T20n1156A_001:0650a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致使如是不得成佛。",
        "from": "T20n1156A_001:0650a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於自心諦求諸佛。",
        "from": "T20n1156A_001:0650a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發若干誓願。",
        "from": "T20n1156A_001:0650a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願以訖。",
        "from": "T20n1156A_001:0650a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾淨信便得此契。",
        "from": "T20n1156A_001:0650a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱為一切諸佛大菩提心。",
        "from": "T20n1156A_001:0650a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我結此契便即懺悔。",
        "from": "T20n1156A_001:0650a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有障難一時蕩盡。",
        "from": "T20n1156A_001:0650a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛受記號吾。",
        "from": "T20n1156A_001:0650a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來得名釋迦牟尼。",
        "from": "T20n1156A_001:0650a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足十力四無所畏。",
        "from": "T20n1156A_001:0650a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子假使眾生。",
        "from": "T20n1156A_001:0650a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出十佛身血百佛身血。",
        "from": "T20n1156A_001:0650a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千佛身血萬佛身血。",
        "from": "T20n1156A_001:0650a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千億佛身血。",
        "from": "T20n1156A_001:0650a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無量恒河沙數佛身血。",
        "from": "T20n1156A_001:0650a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可數不可數佛身血者。",
        "from": "T20n1156A_001:0650a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結我此契。",
        "from": "T20n1156A_001:0650a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦我隨求即得陀羅尼三遍等一遍一句。",
        "from": "T20n1156A_001:0650a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一稱名字。",
        "from": "T20n1156A_001:0650a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有殘罪露及眾生。",
        "from": "T20n1156A_001:0650a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有是處。",
        "from": "T20n1156A_001:0650a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1156A_001:0650a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有殘罪於眾生者。",
        "from": "T20n1156A_001:0650a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛便失菩提。",
        "from": "T20n1156A_001:0650a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若有一人起慈悲心。",
        "from": "T20n1156A_001:0650a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結我此契。",
        "from": "T20n1156A_001:0650a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為大千稱說。",
        "from": "T20n1156A_001:0650a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生舉印指於十方界。",
        "from": "T20n1156A_001:0650a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有眾生一切罪障病苦惱等。",
        "from": "T20n1156A_001:0650a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時消滅無有遺餘。",
        "from": "T20n1156A_001:0650a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得初地。",
        "from": "T20n1156A_001:0650a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生亦所不覺。",
        "from": "T20n1156A_001:0650a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入魔宮結持此契。",
        "from": "T20n1156A_001:0650a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王順伏追捨魔業。",
        "from": "T20n1156A_001:0650a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入王宮結持此印。",
        "from": "T20n1156A_001:0650a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即起慈忍正法治人。",
        "from": "T20n1156A_001:0650a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遭王難等。",
        "from": "T20n1156A_001:0650a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入州縣等在枷鎖。",
        "from": "T20n1156A_001:0650a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結持此印。",
        "from": "T20n1156A_001:0650a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枷鎖解脫。",
        "from": "T20n1156A_001:0650a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官自開恩兩得和可。",
        "from": "T20n1156A_001:0650a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人能日日作此者。",
        "from": "T20n1156A_001:0650a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間無不調順。",
        "from": "T20n1156A_001:0650a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍王歡喜以能降雨。",
        "from": "T20n1156A_001:0650a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間所有[石*(ㄙ/大/木)]毒害心皆和悅。",
        "from": "T20n1156A_001:0650a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入鬪戰。",
        "from": "T20n1156A_001:0650a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印指之。",
        "from": "T20n1156A_001:0650a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩軍和解一無所損。",
        "from": "T20n1156A_001:0650a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我以此印不可為比。",
        "from": "T20n1156A_001:0650a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一喻知。",
        "from": "T20n1156A_001:0650a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子十方諸天共為萬。",
        "from": "T20n1156A_001:0650a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不及一那羅延力。",
        "from": "T20n1156A_001:0650a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界那羅延共為萬。",
        "from": "T20n1156A_001:0650a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不及菩薩一節之力。",
        "from": "T20n1156A_001:0650a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界一切菩薩共為萬。",
        "from": "T20n1156A_001:0650a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不及如來一毛端力。",
        "from": "T20n1156A_001:0650a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子假使一佛能作種種不思議力。",
        "from": "T20n1156A_001:0650a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶亦不如無量諸佛之力。",
        "from": "T20n1156A_001:0650a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1156A_001:0650a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來共住持故。",
        "from": "T20n1156A_001:0650a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共隨喜故。",
        "from": "T20n1156A_001:0650b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共印可故。",
        "from": "T20n1156A_001:0650b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方如來從此生故。",
        "from": "T20n1156A_001:0650b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩金剛常祐助故。",
        "from": "T20n1156A_001:0650b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等至菩提無二見故。",
        "from": "T20n1156A_001:0650b02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若說此契功用。",
        "from": "T20n1156A_001:0650b03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮劫不盡不可思議。",
        "from": "T20n1156A_001:0650b03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生欲至佛位。",
        "from": "T20n1156A_001:0650b04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始得此契小小初地。",
        "from": "T20n1156A_001:0650b04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦未聞知。",
        "from": "T20n1156A_001:0650b05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可具說。",
        "from": "T20n1156A_001:0650b05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提根本者從一心生。",
        "from": "T20n1156A_001:0650b05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一法生。",
        "from": "T20n1156A_001:0650b06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從異見生。",
        "from": "T20n1156A_001:0650b06_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從斷愛憎生。",
        "from": "T20n1156A_001:0650b06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從離殺業生。",
        "from": "T20n1156A_001:0650b07_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始淨土生。",
        "from": "T20n1156A_001:0650b07_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從決定生。",
        "from": "T20n1156A_001:0650b07_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從質直無為生。",
        "from": "T20n1156A_001:0650b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從柔和善忍生。",
        "from": "T20n1156A_001:0650b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從勇猛精勤生從怜愍一切眾生生。",
        "from": "T20n1156A_001:0650b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從大慈悲生。",
        "from": "T20n1156A_001:0650b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無畏生。",
        "from": "T20n1156A_001:0650b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從難苦生。",
        "from": "T20n1156A_001:0650b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從不捨眾生生。",
        "from": "T20n1156A_001:0650b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從敬養父母孝順師長生。",
        "from": "T20n1156A_001:0650b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從心不跳躁生。",
        "from": "T20n1156A_001:0650b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從不下劣生。",
        "from": "T20n1156A_001:0650b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從淨三業生。",
        "from": "T20n1156A_001:0650b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子此是菩提根本契。",
        "from": "T20n1156A_001:0650b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子一切天仙龍神四天王金剛。",
        "from": "T20n1156A_001:0650b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞辟支佛四果聖眾。",
        "from": "T20n1156A_001:0650b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及菩薩摩訶薩。",
        "from": "T20n1156A_001:0650b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行此菩薩事。",
        "from": "T20n1156A_001:0650b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得徹到者。",
        "from": "T20n1156A_001:0650b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有是處。",
        "from": "T20n1156A_001:0650b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1156A_001:0650b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此事者是諸佛行。",
        "from": "T20n1156A_001:0650b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除佛以外能行此者。",
        "from": "T20n1156A_001:0650b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是佛身不可思議。",
        "from": "T20n1156A_001:0650b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非菩薩也。",
        "from": "T20n1156A_001:0650b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子乃至菩薩金剛不持此契。",
        "from": "T20n1156A_001:0650b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱至法雲地。",
        "from": "T20n1156A_001:0650b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不得受記。",
        "from": "T20n1156A_001:0650b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1156A_001:0650b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無菩提故。",
        "from": "T20n1156A_001:0650b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若有或修一法百法千萬法不可數法。",
        "from": "T20n1156A_001:0650b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不持此契。",
        "from": "T20n1156A_001:0650b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一法之分。",
        "from": "T20n1156A_001:0650b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾聖不喜天神不衛。",
        "from": "T20n1156A_001:0650b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所修靈業雖得小通。",
        "from": "T20n1156A_001:0650b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王共為亦非正仕。",
        "from": "T20n1156A_001:0650b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持此契。",
        "from": "T20n1156A_001:0650b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無間淨與不淨。",
        "from": "T20n1156A_001:0650b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持與不持。",
        "from": "T20n1156A_001:0650b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養與不供養。",
        "from": "T20n1156A_001:0650b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切諸不善業悉皆具造。",
        "from": "T20n1156A_001:0650b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於一念之間。",
        "from": "T20n1156A_001:0650b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫憶此契記持不忘。",
        "from": "T20n1156A_001:0650b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時生善住天證菩提王。",
        "from": "T20n1156A_001:0650b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得作灌頂金輪王於大千界。",
        "from": "T20n1156A_001:0650b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能淨心及身。",
        "from": "T20n1156A_001:0650b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日十二時。",
        "from": "T20n1156A_001:0650b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十時造惡。",
        "from": "T20n1156A_001:0650b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二時憶念。",
        "from": "T20n1156A_001:0650b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思法涅槃不謬不退。",
        "from": "T20n1156A_001:0650b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肉身即證菩提。",
        "from": "T20n1156A_001:0650b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊騰十方如佛無異。",
        "from": "T20n1156A_001:0650b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如此契者。",
        "from": "T20n1156A_001:0650b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界所有印契之根原也。",
        "from": "T20n1156A_001:0650b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常持此契不捨。",
        "from": "T20n1156A_001:0650b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能動十方世界。",
        "from": "T20n1156A_001:0650c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時大神大藥叉王。",
        "from": "T20n1156A_001:0650c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩金剛龍天八部。",
        "from": "T20n1156A_001:0650c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常來衛護如佛無異。",
        "from": "T20n1156A_001:0650c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除如來餘無此力。",
        "from": "T20n1156A_001:0650c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有所須便自持來亦無乏少。",
        "from": "T20n1156A_001:0650c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智惠門聞佛智者悉皆解了。",
        "from": "T20n1156A_001:0650c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩之智亦不足言。",
        "from": "T20n1156A_001:0650c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此契無本流行。",
        "from": "T20n1156A_001:0650c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕之不得輒說如此神通加護。",
        "from": "T20n1156A_001:0650c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已告眾人。",
        "from": "T20n1156A_001:0650c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖見眾不借人。",
        "from": "T20n1156A_001:0650c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1156A_001:0650c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疲命根故。",
        "from": "T20n1156A_001:0650c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得神通但自知之。",
        "from": "T20n1156A_001:0650c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八家祕錄云。",
        "from": "T20n1156A_001:0650c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大隨求八印法一卷(惟謹仁運)蓋當此法延寶三乙卯年正月寫挍訖。",
        "from": "T20n1156A_001:0650c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　金剛乘佛子淨嚴(三十七)天明改元辛丑年閏五月。",
        "from": "T20n1156A_001:0650c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以宇治慧心院藏本書寫竟。",
        "from": "T20n1156A_001:0650c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智積院東武慈忍享和改元酉秋七月。",
        "from": "T20n1156A_001:0650c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以件本令寫之。",
        "from": "T20n1156A_001:0650c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更校對點國字。",
        "from": "T20n1156A_001:0650c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命工上木。",
        "from": "T20n1156A_001:0650c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　豐山沙門快道誌一校畢享和三年四月五日",
        "from": "T20n1156A_001:0650c14_8",
        "context_with_next_sentence": false
    }
]