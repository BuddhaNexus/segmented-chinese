[
    {
        "source_sentence": "般若波羅蜜多心經釋要",
        "from": "X26n0555_001:0878c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明菩薩沙彌　智旭　述",
        "from": "X26n0555_001:0878c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此直指吾人現前一念介爾之心即是三般若也。",
        "from": "X26n0555_001:0878c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫心佛眾生三無差別。",
        "from": "X26n0555_001:0878c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以生法太廣。",
        "from": "X26n0555_001:0878c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法太高。",
        "from": "X26n0555_001:0878c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初心之人惟觀心為易。",
        "from": "X26n0555_001:0878c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故大部六百餘卷。",
        "from": "X26n0555_001:0878c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既約佛法及眾生法。",
        "from": "X26n0555_001:0878c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣明般若。",
        "from": "X26n0555_001:0878c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今但直約心法顯示般若。",
        "from": "X26n0555_001:0878c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然大部雖廣明佛法及眾生法。",
        "from": "X26n0555_001:0878c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗不即心法。",
        "from": "X26n0555_001:0878c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今文雖直明心法。",
        "from": "X26n0555_001:0878c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未嘗不具佛法及眾生法。",
        "from": "X26n0555_001:0878c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得名為三無差也。",
        "from": "X26n0555_001:0878c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以吾人現前一念介爾之心。",
        "from": "X26n0555_001:0878c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗明洞徹。",
        "from": "X26n0555_001:0878c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了常知。",
        "from": "X26n0555_001:0878c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不在內外中間諸處。",
        "from": "X26n0555_001:0878c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無過現未來形迹。",
        "from": "X26n0555_001:0878c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是觀照般若。",
        "from": "X26n0555_001:0878c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以吾人現前一念介爾之心。",
        "from": "X26n0555_001:0878c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "炳現根身器界。",
        "from": "X26n0555_001:0878c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至十界。",
        "from": "X26n0555_001:0878c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假實國土。",
        "from": "X26n0555_001:0878c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等印持。",
        "from": "X26n0555_001:0878c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不前不後。",
        "from": "X26n0555_001:0878c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同時頓具。",
        "from": "X26n0555_001:0878c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是文字般若。",
        "from": "X26n0555_001:0878c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋山河大地明暗色空等一切諸境界。",
        "from": "X26n0555_001:0878c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性無非文字。",
        "from": "X26n0555_001:0878c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不但紙墨語言為文字也。",
        "from": "X26n0555_001:0878c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以吾人現前一念介爾之心。",
        "from": "X26n0555_001:0878c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有知覺之性。",
        "from": "X26n0555_001:0878c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與境界之性。",
        "from": "X26n0555_001:0878c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無分無劑。",
        "from": "X26n0555_001:0878c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能無所。",
        "from": "X26n0555_001:0878c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無是非是。",
        "from": "X26n0555_001:0878c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統惟一法界體。",
        "from": "X26n0555_001:0878c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是實相般若。",
        "from": "X26n0555_001:0878c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實相般若。",
        "from": "X26n0555_001:0878c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非彼岸非此岸。",
        "from": "X26n0555_001:0878c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達此現前一念之實相。",
        "from": "X26n0555_001:0878c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故生死即涅槃。",
        "from": "X26n0555_001:0878c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名波羅蜜。",
        "from": "X26n0555_001:0878c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀照般若。",
        "from": "X26n0555_001:0878c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非彼岸非此岸。",
        "from": "X26n0555_001:0878c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照此現前一念即實相。",
        "from": "X26n0555_001:0878c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故即惑成智。",
        "from": "X26n0555_001:0878c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名波羅蜜。",
        "from": "X26n0555_001:0878c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文字般若。",
        "from": "X26n0555_001:0878c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非彼岸非此岸。",
        "from": "X26n0555_001:0878c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯此現前一念即實相。",
        "from": "X26n0555_001:0878c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故即結業是解脫名波羅蜜。",
        "from": "X26n0555_001:0878c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此心。",
        "from": "X26n0555_001:0879a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即三般若。",
        "from": "X26n0555_001:0879a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三般若祗是一心。",
        "from": "X26n0555_001:0879a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此理常然不可改變。",
        "from": "X26n0555_001:0879a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為經。",
        "from": "X26n0555_001:0879a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依此成行。",
        "from": "X26n0555_001:0879a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸佛菩薩之所共遵。",
        "from": "X26n0555_001:0879a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為經。",
        "from": "X26n0555_001:0879a03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此法門。",
        "from": "X26n0555_001:0879a03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天魔外道不能亂壞。",
        "from": "X26n0555_001:0879a04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為經。",
        "from": "X26n0555_001:0879a04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩。",
        "from": "X26n0555_001:0879a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行深般若波羅蜜多時。",
        "from": "X26n0555_001:0879a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照見五蘊皆空。",
        "from": "X26n0555_001:0879a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度一切苦厄。",
        "from": "X26n0555_001:0879a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要知山下路。",
        "from": "X26n0555_001:0879a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須問過來人。",
        "from": "X26n0555_001:0879a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故舉觀心行成者為榜樣也。",
        "from": "X26n0555_001:0879a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀者能觀之智。",
        "from": "X26n0555_001:0879a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一心三觀。",
        "from": "X26n0555_001:0879a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通名觀照般若也。",
        "from": "X26n0555_001:0879a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在者。",
        "from": "X26n0555_001:0879a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繇證實相理諦。",
        "from": "X26n0555_001:0879a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸境界得大解脫也。",
        "from": "X26n0555_001:0879a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩翻覺有情。",
        "from": "X26n0555_001:0879a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃自利利他之號。",
        "from": "X26n0555_001:0879a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智契實相。",
        "from": "X26n0555_001:0879a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則自利滿足。",
        "from": "X26n0555_001:0879a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智宣文字。",
        "from": "X26n0555_001:0879a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則利他普徧。",
        "from": "X26n0555_001:0879a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名菩薩。",
        "from": "X26n0555_001:0879a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明能行之人也。",
        "from": "X26n0555_001:0879a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深般若波羅蜜多者。",
        "from": "X26n0555_001:0879a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三智一心中得。",
        "from": "X26n0555_001:0879a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權教三乘所不能共。",
        "from": "X26n0555_001:0879a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為深。",
        "from": "X26n0555_001:0879a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此總明所行之法也。",
        "from": "X26n0555_001:0879a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時者。",
        "from": "X26n0555_001:0879a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追指曠劫以前而言。",
        "from": "X26n0555_001:0879a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此一得相應。",
        "from": "X26n0555_001:0879a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則直至盡未來際。",
        "from": "X26n0555_001:0879a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終始不離深般若矣。",
        "from": "X26n0555_001:0879a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照見者。",
        "from": "X26n0555_001:0879a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別明能觀之智。",
        "from": "X26n0555_001:0879a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀照般若。",
        "from": "X26n0555_001:0879a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五蘊者。",
        "from": "X26n0555_001:0879a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別明所觀之境。",
        "from": "X26n0555_001:0879a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即文字般若。",
        "from": "X26n0555_001:0879a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆空者。",
        "from": "X26n0555_001:0879a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別明所顯之諦。",
        "from": "X26n0555_001:0879a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即實相般若。",
        "from": "X26n0555_001:0879a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五陰無不即空假中。",
        "from": "X26n0555_001:0879a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四句咸離。",
        "from": "X26n0555_001:0879a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百非性絕。",
        "from": "X26n0555_001:0879a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強名為空耳。",
        "from": "X26n0555_001:0879a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度一切苦厄者。",
        "from": "X26n0555_001:0879a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自出二死苦因苦果。",
        "from": "X26n0555_001:0879a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦令法界眾生同出二死因果。",
        "from": "X26n0555_001:0879a19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是行法之效。",
        "from": "X26n0555_001:0879a20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦即波羅蜜多也。",
        "from": "X26n0555_001:0879a20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利子。",
        "from": "X26n0555_001:0879a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色不異空。",
        "from": "X26n0555_001:0879a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空不異色。",
        "from": "X26n0555_001:0879a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色即是空。",
        "from": "X26n0555_001:0879a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空即是色。",
        "from": "X26n0555_001:0879a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受想行識。",
        "from": "X26n0555_001:0879a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如是。",
        "from": "X26n0555_001:0879a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利子。",
        "from": "X26n0555_001:0879a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸法空相。",
        "from": "X26n0555_001:0879a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生不滅。",
        "from": "X26n0555_001:0879a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不垢不淨不增不減。",
        "from": "X26n0555_001:0879a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故空中無色。",
        "from": "X26n0555_001:0879a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無受想行識。",
        "from": "X26n0555_001:0879a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無眼耳鼻舌身意。",
        "from": "X26n0555_001:0879a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無色聲香味觸法。",
        "from": "X26n0555_001:0879a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無眼界。",
        "from": "X26n0555_001:0879a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無意識界。",
        "from": "X26n0555_001:0879a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無無明。",
        "from": "X26n0555_001:0879b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無無明盡。",
        "from": "X26n0555_001:0879b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無老死。",
        "from": "X26n0555_001:0879b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無老死盡。",
        "from": "X26n0555_001:0879b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無苦集滅道。",
        "from": "X26n0555_001:0879b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智亦無得。",
        "from": "X26n0555_001:0879b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無所得故。",
        "from": "X26n0555_001:0879b02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此廣釋五蘊皆空之境諦。",
        "from": "X26n0555_001:0879b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而觀照自在其中。",
        "from": "X26n0555_001:0879b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以非觀照不能了達此境諦。",
        "from": "X26n0555_001:0879b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故夫心者。",
        "from": "X26n0555_001:0879b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不起則已。",
        "from": "X26n0555_001:0879b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "介爾有心。",
        "from": "X26n0555_001:0879b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必頓現根身器界。",
        "from": "X26n0555_001:0879b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為色蘊。",
        "from": "X26n0555_001:0879b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必領納諸苦樂境。",
        "from": "X26n0555_001:0879b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為受蘊。",
        "from": "X26n0555_001:0879b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必取相施設名言。",
        "from": "X26n0555_001:0879b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為想蘊。",
        "from": "X26n0555_001:0879b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必生滅遷流不停。",
        "from": "X26n0555_001:0879b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為行蘊。",
        "from": "X26n0555_001:0879b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則必了了分別諸法。",
        "from": "X26n0555_001:0879b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為識蘊。",
        "from": "X26n0555_001:0879b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知隨其所起介爾之心。",
        "from": "X26n0555_001:0879b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法爾具足五疊渾濁。",
        "from": "X26n0555_001:0879b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以甚深般若照之。",
        "from": "X26n0555_001:0879b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知色惟是心。",
        "from": "X26n0555_001:0879b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別無實色。",
        "from": "X26n0555_001:0879b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切根身器界。",
        "from": "X26n0555_001:0879b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆如空華夢物。",
        "from": "X26n0555_001:0879b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故色不異空。",
        "from": "X26n0555_001:0879b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空亦惟心。",
        "from": "X26n0555_001:0879b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別無異空。",
        "from": "X26n0555_001:0879b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有一法過涅槃者。",
        "from": "X26n0555_001:0879b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦說為如幻如夢。",
        "from": "X26n0555_001:0879b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故空不異色。",
        "from": "X26n0555_001:0879b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既云不異。",
        "from": "X26n0555_001:0879b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已是相即。",
        "from": "X26n0555_001:0879b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶恐封迷情者。",
        "from": "X26n0555_001:0879b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚作翻手覆手之解。",
        "from": "X26n0555_001:0879b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故重示云色即是空空即是色。",
        "from": "X26n0555_001:0879b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂隨拈一微塵色體。",
        "from": "X26n0555_001:0879b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即法界橫徧豎窮。",
        "from": "X26n0555_001:0879b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故即是空。",
        "from": "X26n0555_001:0879b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂全事即理。",
        "from": "X26n0555_001:0879b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有少許理性而不在此事中。",
        "from": "X26n0555_001:0879b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此微塵所具真空全理。",
        "from": "X26n0555_001:0879b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還即頓具法界全事。",
        "from": "X26n0555_001:0879b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故即是色。",
        "from": "X26n0555_001:0879b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所稱全理即事。",
        "from": "X26n0555_001:0879b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有少許事相而不在此理中。",
        "from": "X26n0555_001:0879b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯則當體絕待。",
        "from": "X26n0555_001:0879b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無二物。",
        "from": "X26n0555_001:0879b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既於色蘊了達此實相已。",
        "from": "X26n0555_001:0879b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受想行識例皆可知。",
        "from": "X26n0555_001:0879b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又恐執迷之人。",
        "from": "X26n0555_001:0879b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此五蘊實相。",
        "from": "X26n0555_001:0879b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從照見生。",
        "from": "X26n0555_001:0879b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故更申示之曰。",
        "from": "X26n0555_001:0879b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是五蘊諸法。",
        "from": "X26n0555_001:0879b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當體即是真空實相。",
        "from": "X26n0555_001:0879b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本自如斯。",
        "from": "X26n0555_001:0879b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非實相生而五蘊滅。",
        "from": "X26n0555_001:0879b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五蘊本自不生不滅。",
        "from": "X26n0555_001:0879b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為空相耳。",
        "from": "X26n0555_001:0879b22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又恐迷者。",
        "from": "X26n0555_001:0879b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此五蘊空相雖非生滅。",
        "from": "X26n0555_001:0879b23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有垢淨。",
        "from": "X26n0555_001:0879b23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂凡夫隨於染緣則垢。",
        "from": "X26n0555_001:0879b24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人隨於淨緣則淨。",
        "from": "X26n0555_001:0879b24_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故更申示之曰。",
        "from": "X26n0555_001:0879c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫五蘊亦即空相。",
        "from": "X26n0555_001:0879c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人五蘊亦即空相。",
        "from": "X26n0555_001:0879c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何垢淨之有哉。",
        "from": "X26n0555_001:0879c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又恐迷者。",
        "from": "X26n0555_001:0879c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂此五蘊空相。",
        "from": "X26n0555_001:0879c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無垢淨而有增減。",
        "from": "X26n0555_001:0879c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂凡夫迷。",
        "from": "X26n0555_001:0879c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故生死浩然為增。",
        "from": "X26n0555_001:0879c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德相隱覆為減。",
        "from": "X26n0555_001:0879c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人悟。",
        "from": "X26n0555_001:0879c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故照用無盡為增。",
        "from": "X26n0555_001:0879c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惑業消亡為減。",
        "from": "X26n0555_001:0879c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故更申示之曰。",
        "from": "X26n0555_001:0879c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷時亦只此諸法空相。",
        "from": "X26n0555_001:0879c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟時亦只此諸法空相。",
        "from": "X26n0555_001:0879c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何增減之有哉。",
        "from": "X26n0555_001:0879c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既向五蘊發明此妙諦已。",
        "from": "X26n0555_001:0879c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂即廣歷一切差別法相。",
        "from": "X26n0555_001:0879c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "融絕聖凡情見。",
        "from": "X26n0555_001:0879c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而曰是故空中無色乃至亦無得也。",
        "from": "X26n0555_001:0879c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然所謂無色乃至亦無得者。",
        "from": "X26n0555_001:0879c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈俟融絕而後無哉。",
        "from": "X26n0555_001:0879c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良以本無所得故也。",
        "from": "X26n0555_001:0879c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無所得名之為諦。",
        "from": "X26n0555_001:0879c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了此無得名之為觀。",
        "from": "X26n0555_001:0879c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而總不離五蘊為所觀境。",
        "from": "X26n0555_001:0879c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若境若諦若觀。",
        "from": "X26n0555_001:0879c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又總不離現前一念介爾之心。",
        "from": "X26n0555_001:0879c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心宛具三義。",
        "from": "X26n0555_001:0879c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦即實相。",
        "from": "X26n0555_001:0879c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀即觀照。",
        "from": "X26n0555_001:0879c13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境即文字。",
        "from": "X26n0555_001:0879c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不縱橫並別。",
        "from": "X26n0555_001:0879c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非一異。",
        "from": "X26n0555_001:0879c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名為深般若也。",
        "from": "X26n0555_001:0879c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提薩埵。",
        "from": "X26n0555_001:0879c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依般若波羅蜜多。",
        "from": "X26n0555_001:0879c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故心無罣礙。",
        "from": "X26n0555_001:0879c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無罣礙。",
        "from": "X26n0555_001:0879c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無有恐怖。",
        "from": "X26n0555_001:0879c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離顛倒夢想。",
        "from": "X26n0555_001:0879c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟涅槃。",
        "from": "X26n0555_001:0879c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸佛。",
        "from": "X26n0555_001:0879c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依般若波羅蜜多。",
        "from": "X26n0555_001:0879c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得阿耨多羅三藐三菩提。",
        "from": "X26n0555_001:0879c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知般若波羅蜜多。",
        "from": "X26n0555_001:0879c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大神呪。",
        "from": "X26n0555_001:0879c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大明呪。",
        "from": "X26n0555_001:0879c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是無上呪。",
        "from": "X26n0555_001:0879c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是無等等呪。",
        "from": "X26n0555_001:0879c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除一切苦。",
        "from": "X26n0555_001:0879c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實不虗。",
        "from": "X26n0555_001:0879c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此徧舉菩薩諸佛為證。",
        "from": "X26n0555_001:0879c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而明此深般若。",
        "from": "X26n0555_001:0879c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真能度一切苦厄。",
        "from": "X26n0555_001:0879c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂過去諸如來。",
        "from": "X26n0555_001:0879c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯門已成就。",
        "from": "X26n0555_001:0879c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在諸菩薩。",
        "from": "X26n0555_001:0879c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今各入圓明。",
        "from": "X26n0555_001:0879c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來修學人。",
        "from": "X26n0555_001:0879c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當依如是法。",
        "from": "X26n0555_001:0879c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非惟觀世音也。",
        "from": "X26n0555_001:0879c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無罣礙。",
        "from": "X26n0555_001:0879c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則結業即解脫。",
        "from": "X26n0555_001:0879c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟方便淨涅槃。",
        "from": "X26n0555_001:0879c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無恐怖。",
        "from": "X26n0555_001:0879c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則苦果即法身。",
        "from": "X26n0555_001:0879c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟性淨涅槃。",
        "from": "X26n0555_001:0879c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離顛倒夢想。",
        "from": "X26n0555_001:0879c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則煩惑即智明。",
        "from": "X26n0555_001:0880a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟圓淨涅槃。",
        "from": "X26n0555_001:0880a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依實相般若。",
        "from": "X26n0555_001:0880a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得真性菩提。",
        "from": "X26n0555_001:0880a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依觀照般若。",
        "from": "X26n0555_001:0880a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得實智菩提。",
        "from": "X26n0555_001:0880a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依文字般若。",
        "from": "X26n0555_001:0880a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得方便菩提。",
        "from": "X26n0555_001:0880a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提是如如智。",
        "from": "X26n0555_001:0880a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智必冥理。",
        "from": "X26n0555_001:0880a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃是如如理。",
        "from": "X26n0555_001:0880a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理必契智。",
        "from": "X26n0555_001:0880a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故影略而互言之。",
        "from": "X26n0555_001:0880a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此深般若。",
        "from": "X26n0555_001:0880a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即大神呪。",
        "from": "X26n0555_001:0880a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具妙用故。",
        "from": "X26n0555_001:0880a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即大明呪。",
        "from": "X26n0555_001:0880a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智照相故。",
        "from": "X26n0555_001:0880a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無上呪。",
        "from": "X26n0555_001:0880a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實相體故。",
        "from": "X26n0555_001:0880a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無等等呪。",
        "from": "X26n0555_001:0880a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有一法能等此心。",
        "from": "X26n0555_001:0880a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心能等一切諸法。",
        "from": "X26n0555_001:0880a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其同歸實相印故。",
        "from": "X26n0555_001:0880a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之心呪。",
        "from": "X26n0555_001:0880a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "的的能除自他分段變易諸苦因果。",
        "from": "X26n0555_001:0880a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實不虗。",
        "from": "X26n0555_001:0880a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應諦信也。",
        "from": "X26n0555_001:0880a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說般若波羅蜜多呪。",
        "from": "X26n0555_001:0880a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "X26n0555_001:0880a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揭諦揭諦。",
        "from": "X26n0555_001:0880a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波羅揭諦。",
        "from": "X26n0555_001:0880a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波羅僧揭諦。",
        "from": "X26n0555_001:0880a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提薩婆訶前之顯說既指般若即呪。",
        "from": "X26n0555_001:0880a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之密說。",
        "from": "X26n0555_001:0880a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知呪即般若。",
        "from": "X26n0555_001:0880a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然顯說而又密說者。",
        "from": "X26n0555_001:0880a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯密各具四悉檀益故。",
        "from": "X26n0555_001:0880a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正以不翻為妙。",
        "from": "X26n0555_001:0880a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不宜穿鑿。",
        "from": "X26n0555_001:0880a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若波羅蜜多心經釋要(終)",
        "from": "X26n0555_001:0880a16_0",
        "context_with_next_sentence": false
    }
]