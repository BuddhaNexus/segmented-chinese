[
    {
        "source_sentence": "大乘寶要義論卷第九",
        "from": "T32n1635_009:0070c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譯經三藏朝散大夫試鴻臚少卿",
        "from": "T32n1635_009:0070c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光梵大師賜紫沙門臣惟淨等",
        "from": "T32n1635_009:0070c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯",
        "from": "T32n1635_009:0070c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如入楞伽經中。",
        "from": "T32n1635_009:0070c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧菩薩問如來藏。",
        "from": "T32n1635_009:0070c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0070c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧。",
        "from": "T32n1635_009:0070c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故汝今問於如來自性明亮清淨本來清淨如是之說。",
        "from": "T32n1635_009:0070c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來具三十二相。",
        "from": "T32n1635_009:0070c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在一切有情身中。",
        "from": "T32n1635_009:0070c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無價寶為弊垢衣之所纏覆。",
        "from": "T32n1635_009:0070c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊處界衣纏覆亦然。",
        "from": "T32n1635_009:0070c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼貪瞋癡不實計執。",
        "from": "T32n1635_009:0070c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之垢染是無常法。",
        "from": "T32n1635_009:0070c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不堅牢。",
        "from": "T32n1635_009:0070c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是不究竟。",
        "from": "T32n1635_009:0070c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧白佛言。",
        "from": "T32n1635_009:0070c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1635_009:0070c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道所說神我之語。",
        "from": "T32n1635_009:0070c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故不能等比如來藏語。",
        "from": "T32n1635_009:0070c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以外道說神我是常。",
        "from": "T32n1635_009:0070c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我能造作。",
        "from": "T32n1635_009:0070c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離繫自在而永不滅。",
        "from": "T32n1635_009:0070c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼說如是神我之語。",
        "from": "T32n1635_009:0070c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0070c18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧外道我語不可等比如來藏語。",
        "from": "T32n1635_009:0070c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧。",
        "from": "T32n1635_009:0070c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然我所說實際涅槃無生空無相無願等諸句義。",
        "from": "T32n1635_009:0070c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來應供正等正覺。",
        "from": "T32n1635_009:0070c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸愚者令離無我驚怖之法。",
        "from": "T32n1635_009:0070c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以方便說無分別無所對礙如來藏門。",
        "from": "T32n1635_009:0070c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中亦非未來現在。",
        "from": "T32n1635_009:0070c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩摩訶薩著我所作。",
        "from": "T32n1635_009:0070c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧。",
        "from": "T32n1635_009:0070c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如窰師取土成泥用水及繩并其工具勤力所作成種種器。",
        "from": "T32n1635_009:0070c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來亦復如是。",
        "from": "T32n1635_009:0070c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住法無我離分別相。",
        "from": "T32n1635_009:0070c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以種種勝慧方便善巧相應。",
        "from": "T32n1635_009:0070c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說如來藏。",
        "from": "T32n1635_009:0070c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說無我法。",
        "from": "T32n1635_009:0070c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以多妙巧文句言詞譬喻而說。",
        "from": "T32n1635_009:0070c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是緣故外道我語不可等比如來藏語。",
        "from": "T32n1635_009:0070c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧。",
        "from": "T32n1635_009:0070c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又我所說如來藏語。",
        "from": "T32n1635_009:0070c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為降伏諸外道輩執我語者。",
        "from": "T32n1635_009:0071a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以方便說如來藏。",
        "from": "T32n1635_009:0071a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等輩何故意樂墮在無實主宰計執見中。",
        "from": "T32n1635_009:0071a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於三解脫門意樂具足。",
        "from": "T32n1635_009:0071a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能速證阿耨多羅三藐三菩提果。",
        "from": "T32n1635_009:0071a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義故如來應供正等正覺所說如來藏法與外道我語不可等比。",
        "from": "T32n1635_009:0071a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故大慧。",
        "from": "T32n1635_009:0071a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令外道離諸見執。",
        "from": "T32n1635_009:0071a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使其當得隨順如來無我藏法。",
        "from": "T32n1635_009:0071a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所宣說。",
        "from": "T32n1635_009:0071a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂無上成就究竟之法。",
        "from": "T32n1635_009:0071a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂諸菩薩空無生無二無自性法。",
        "from": "T32n1635_009:0071a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂甚深之法。",
        "from": "T32n1635_009:0071a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有宣說及受持者。",
        "from": "T32n1635_009:0071a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能普攝一切大乘經中甚深之義。",
        "from": "T32n1635_009:0071a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1635_009:0071a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此甚深法於一切法一切經中攝故。",
        "from": "T32n1635_009:0071a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經又云。",
        "from": "T32n1635_009:0071a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧。",
        "from": "T32n1635_009:0071a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此空無生無二無自性相。",
        "from": "T32n1635_009:0071a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普攝一切諸佛及一切經典故。",
        "from": "T32n1635_009:0071a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月燈三昧經中。",
        "from": "T32n1635_009:0071a13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來說偈云。",
        "from": "T32n1635_009:0071a13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　三千大千世界中　　我所宣說諸經典　種種文句皆一義　　故復不能周遍說　乃至一切諸如來　　及廣宣說多種法　於一句中修學已　　一切修習得成就　一切諸法皆空性　　若人於義明解了　此句義中學所成　　而諸佛法不難得　於甚深法能信解　　獲得一切勝福生　諸有世間出世間　　辦所作事至成佛寶授經云。",
        "from": "T32n1635_009:0071a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次妙吉祥。",
        "from": "T32n1635_009:0071a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩經百千劫善修六波羅蜜多具善巧方便。",
        "from": "T32n1635_009:0071a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人於此正法勤求聽受者。",
        "from": "T32n1635_009:0071a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比前福蘊此復倍多。",
        "from": "T32n1635_009:0071a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況以無所求心聽受書寫為他廣說。",
        "from": "T32n1635_009:0071a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛般若波羅蜜多經云。",
        "from": "T32n1635_009:0071a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0071a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提。",
        "from": "T32n1635_009:0071a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於汝意云何。",
        "from": "T32n1635_009:0071a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殑伽河中所有沙數。",
        "from": "T32n1635_009:0071a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一一沙為殑伽河。",
        "from": "T32n1635_009:0071a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸河中所有沙數寧為多不。",
        "from": "T32n1635_009:0071a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提。",
        "from": "T32n1635_009:0071a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言諸殑伽河尚多無數。",
        "from": "T32n1635_009:0071a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況其沙。",
        "from": "T32n1635_009:0071b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0071b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提。",
        "from": "T32n1635_009:0071b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今實言告汝。",
        "from": "T32n1635_009:0071b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T32n1635_009:0071b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸殑伽河中所有沙數如是沙等世界。",
        "from": "T32n1635_009:0071b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七寶滿爾所世界。",
        "from": "T32n1635_009:0071b03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持用布施諸佛如來。",
        "from": "T32n1635_009:0071b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子善女人。",
        "from": "T32n1635_009:0071b04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是緣故得福多不。",
        "from": "T32n1635_009:0071b04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提言。",
        "from": "T32n1635_009:0071b05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚多世尊。",
        "from": "T32n1635_009:0071b05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚多善逝。",
        "from": "T32n1635_009:0071b05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0071b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提。",
        "from": "T32n1635_009:0071b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人於此正法乃至受持一四句偈為他說者。",
        "from": "T32n1635_009:0071b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其福勝彼。",
        "from": "T32n1635_009:0071b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵王問經云。",
        "from": "T32n1635_009:0071b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者。",
        "from": "T32n1635_009:0071b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T32n1635_009:0071b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來所樂修福事者。",
        "from": "T32n1635_009:0071b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當於此正法聽聞信解及受持等即能獲得色相富盛廣多眷屬於法自在。",
        "from": "T32n1635_009:0071b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人天之中受諸快樂。",
        "from": "T32n1635_009:0071b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利子說般若波羅蜜多經云。",
        "from": "T32n1635_009:0071b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利子白佛言。",
        "from": "T32n1635_009:0071b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1635_009:0071b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人得聞說此般若波羅蜜多。",
        "from": "T32n1635_009:0071b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已信解者。",
        "from": "T32n1635_009:0071b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人即於菩提得不退轉。",
        "from": "T32n1635_009:0071b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩言。",
        "from": "T32n1635_009:0071b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T32n1635_009:0071b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞說此般若波羅蜜多聞已信解者。",
        "from": "T32n1635_009:0071b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩即得近佛果位。",
        "from": "T32n1635_009:0071b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥菩薩言。",
        "from": "T32n1635_009:0071b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若有聞說此般若波羅蜜多。",
        "from": "T32n1635_009:0071b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已信解者。",
        "from": "T32n1635_009:0071b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見是菩薩當如佛想一切罪染惡作而悉解除。",
        "from": "T32n1635_009:0071b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切業障皆得清淨。",
        "from": "T32n1635_009:0071b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於甚深法能生勝解。",
        "from": "T32n1635_009:0071b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來藏經云。",
        "from": "T32n1635_009:0071b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0071b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉。",
        "from": "T32n1635_009:0071b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最極十不善業者。",
        "from": "T32n1635_009:0071b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂一者假使有人緣覺為父而興殺害。",
        "from": "T32n1635_009:0071b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極殺生之罪。",
        "from": "T32n1635_009:0071b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者侵奪三寶財物。",
        "from": "T32n1635_009:0071b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極不與取罪。",
        "from": "T32n1635_009:0071b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者假使有人阿羅漢為母而生染著。",
        "from": "T32n1635_009:0071b22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極邪染之罪。",
        "from": "T32n1635_009:0071b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者或有說言我是如來等。",
        "from": "T32n1635_009:0071b23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極妄語之罪。",
        "from": "T32n1635_009:0071b24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者於聖眾所而作離間。",
        "from": "T32n1635_009:0071b25_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極兩舌之罪。",
        "from": "T32n1635_009:0071b25_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者毀呰聖眾。",
        "from": "T32n1635_009:0071b26_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極惡口之罪。",
        "from": "T32n1635_009:0071b26_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者於正法欲雜飾為障。",
        "from": "T32n1635_009:0071b26_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極綺語之罪。",
        "from": "T32n1635_009:0071b27_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者於其正趣正道所有利養起侵奪心。",
        "from": "T32n1635_009:0071b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極貪欲之罪。",
        "from": "T32n1635_009:0071b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者稱讚五無間業。",
        "from": "T32n1635_009:0071b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極瞋恚之罪。",
        "from": "T32n1635_009:0071b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者起僻惡見。",
        "from": "T32n1635_009:0071c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為最極邪見之罪。",
        "from": "T32n1635_009:0071c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉。",
        "from": "T32n1635_009:0071c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等是為十不善業。",
        "from": "T32n1635_009:0071c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆極大罪。",
        "from": "T32n1635_009:0071c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉若一有情有如是罪具行十不善業者。",
        "from": "T32n1635_009:0071c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來即為宣說因緣和合之法使令解入。",
        "from": "T32n1635_009:0071c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時亦無我人有情壽者之想。",
        "from": "T32n1635_009:0071c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能解了此法無作無為如幻之法。",
        "from": "T32n1635_009:0071c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離染清淨自性明亮。",
        "from": "T32n1635_009:0071c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解一切法本來清淨。",
        "from": "T32n1635_009:0071c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切法淨信勝解者。",
        "from": "T32n1635_009:0071c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不說彼有情墮於惡趣。",
        "from": "T32n1635_009:0071c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1635_009:0071c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸煩惱聚性可得。",
        "from": "T32n1635_009:0071c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生已即時一切破散。",
        "from": "T32n1635_009:0071c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知諸煩惱一聚因緣和合所生。",
        "from": "T32n1635_009:0071c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生已即滅。",
        "from": "T32n1635_009:0071c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起心遣除。",
        "from": "T32n1635_009:0071c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸煩惱隨即有生。",
        "from": "T32n1635_009:0071c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是信解者。",
        "from": "T32n1635_009:0071c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼復何有罪之分位。",
        "from": "T32n1635_009:0071c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無處容受故若言有諸罪障而可住者。",
        "from": "T32n1635_009:0071c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有是處。",
        "from": "T32n1635_009:0071c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持律優波離尊者問降魔品云。",
        "from": "T32n1635_009:0071c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諸惡魔云何是苾芻真持律行。",
        "from": "T32n1635_009:0071c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔言。",
        "from": "T32n1635_009:0071c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者。",
        "from": "T32n1635_009:0071c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若苾芻了知一切法畢竟調伏。",
        "from": "T32n1635_009:0071c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸罪本來無前後際。",
        "from": "T32n1635_009:0071c15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離邊際故。",
        "from": "T32n1635_009:0071c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若犯墮罪及餘惡作。",
        "from": "T32n1635_009:0071c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而悉解除勿生堅著。",
        "from": "T32n1635_009:0071c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如是法為他開示。",
        "from": "T32n1635_009:0071c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼之所有五無間罪。",
        "from": "T32n1635_009:0071c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚悉蠲除。",
        "from": "T32n1635_009:0071c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復少略破戒垢染。",
        "from": "T32n1635_009:0071c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解是法律者。",
        "from": "T32n1635_009:0071c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為客塵煩惱所染。",
        "from": "T32n1635_009:0071c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生出離想。",
        "from": "T32n1635_009:0071c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知諸煩惱非內非外亦非中間。",
        "from": "T32n1635_009:0071c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非離染智能除煩惱。",
        "from": "T32n1635_009:0071c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離染之性亦不可遣。",
        "from": "T32n1635_009:0071c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者如實觀諸煩惱。",
        "from": "T32n1635_009:0071c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如浮雲風飄流散。",
        "from": "T32n1635_009:0071c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所向方何適何住又諸煩惱如水中月。",
        "from": "T32n1635_009:0071c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍計影像對現其前。",
        "from": "T32n1635_009:0071c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又諸煩惱是黑暗境界慧燈光明而能照破。",
        "from": "T32n1635_009:0071c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又煩惱賊竊害色相如夜叉羅剎。",
        "from": "T32n1635_009:0071c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若深固作意如實觀察。",
        "from": "T32n1635_009:0071c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無所住。",
        "from": "T32n1635_009:0071c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又諸煩惱常伺其便。",
        "from": "T32n1635_009:0071c26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不深固作意。",
        "from": "T32n1635_009:0071c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即煩惱增長於空無相無願智慧法中即不違害。",
        "from": "T32n1635_009:0071c27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於如是諸煩惱中。",
        "from": "T32n1635_009:0071c28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者以智於彼染著煩惱諸有情所對住其前起悲愍心為說無我無有情法。",
        "from": "T32n1635_009:0071c29_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其離染。",
        "from": "T32n1635_009:0072a01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即是為真實持律。",
        "from": "T32n1635_009:0072a02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世王經云。",
        "from": "T32n1635_009:0072a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0072a02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1635_009:0072a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今實言告汝。",
        "from": "T32n1635_009:0072a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有造五無間罪者。",
        "from": "T32n1635_009:0072a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞如是正法已能生勝解。",
        "from": "T32n1635_009:0072a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不說彼人有業及業障。",
        "from": "T32n1635_009:0072a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1635_009:0072a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以要言之。",
        "from": "T32n1635_009:0072a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所宣說甚深正法。",
        "from": "T32n1635_009:0072a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應生勝解廣大稱讚。",
        "from": "T32n1635_009:0072a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數於彼彼經中專勤聽受不離善巧方便菩薩應當如是勤行說甚深法。",
        "from": "T32n1635_009:0072a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故慧及方便二法不離。",
        "from": "T32n1635_009:0072a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為菩薩相應正法。",
        "from": "T32n1635_009:0072a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰經云。",
        "from": "T32n1635_009:0072a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無方便慧縛。",
        "from": "T32n1635_009:0072a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有方便慧解。",
        "from": "T32n1635_009:0072a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂無方便慧縛。",
        "from": "T32n1635_009:0072a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩於空無相無願法中調伏其心。",
        "from": "T32n1635_009:0072a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以相好莊嚴佛土成熟有情。",
        "from": "T32n1635_009:0072a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即是為無方便慧縛。",
        "from": "T32n1635_009:0072a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂有方便慧解。",
        "from": "T32n1635_009:0072a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩能以相好莊嚴佛土成熟有情。",
        "from": "T32n1635_009:0072a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於空無相無願法中調伏其心。",
        "from": "T32n1635_009:0072a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習力勤行而不疲懈。",
        "from": "T32n1635_009:0072a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即是為有方便慧解。",
        "from": "T32n1635_009:0072a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂無慧方便縛。",
        "from": "T32n1635_009:0072a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩於諸見煩惱生起隨逐有所住著。",
        "from": "T32n1635_009:0072a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然復發起一切善根迴向無上菩提。",
        "from": "T32n1635_009:0072a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即是為無慧方便縛。",
        "from": "T32n1635_009:0072a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂有慧方便解。",
        "from": "T32n1635_009:0072a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩於諸見煩惱生起隨逐斷諸有著。",
        "from": "T32n1635_009:0072a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而發起一切善根迴向無上菩提悉無所取。",
        "from": "T32n1635_009:0072a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即是為有慧方便解。",
        "from": "T32n1635_009:0072a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等慧及方便二法和合。",
        "from": "T32n1635_009:0072a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知皆是菩薩之行。",
        "from": "T32n1635_009:0072a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何是菩薩行。",
        "from": "T32n1635_009:0072a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂非凡夫行。",
        "from": "T32n1635_009:0072a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非賢聖行。",
        "from": "T32n1635_009:0072a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於生死不為染污。",
        "from": "T32n1635_009:0072a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於涅槃不永寂滅。",
        "from": "T32n1635_009:0072a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖求四諦智亦不非時取證涅槃。",
        "from": "T32n1635_009:0072a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖觀內空而常思念於三有中示現受生。",
        "from": "T32n1635_009:0072a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖觀無生而不入正位。",
        "from": "T32n1635_009:0072a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072a27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖攝一切有情而不染著。",
        "from": "T32n1635_009:0072a27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072a28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖行於空而常勤求諸相功德。",
        "from": "T32n1635_009:0072a28_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖行無作而勤修一切善行獲得輕安。",
        "from": "T32n1635_009:0072a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行雖修止觀之行而不畢竟墮於寂滅。",
        "from": "T32n1635_009:0072b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖轉法輪示現大般涅槃而不捨菩薩所行之行。",
        "from": "T32n1635_009:0072b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩行。",
        "from": "T32n1635_009:0072b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡如是等皆是菩薩所行之行。",
        "from": "T32n1635_009:0072b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降魔經云。",
        "from": "T32n1635_009:0072b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次所有諸菩薩摩訶薩最上正行。",
        "from": "T32n1635_009:0072b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂即勝慧智增上相應。",
        "from": "T32n1635_009:0072b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若方便智即普攝一切善法之行。",
        "from": "T32n1635_009:0072b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝慧智者即無我無人無有情無壽者無儒童等。",
        "from": "T32n1635_009:0072b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便智者即成熟一切有情之行。",
        "from": "T32n1635_009:0072b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝慧智者即遍攝諸法之行。",
        "from": "T32n1635_009:0072b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便智者即正法攝受之行。",
        "from": "T32n1635_009:0072b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝慧智者即一切佛法界無分別行。",
        "from": "T32n1635_009:0072b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便智者即一切佛法尊重供養承事之行。",
        "from": "T32n1635_009:0072b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝慧智者即一切佛剎如虛空行。",
        "from": "T32n1635_009:0072b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便智者即一切佛剎功德莊嚴之具作清淨莊嚴之行。",
        "from": "T32n1635_009:0072b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝慧智者即一切賢聖修無為行。",
        "from": "T32n1635_009:0072b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便智者即於一切師尊所起尊重心。",
        "from": "T32n1635_009:0072b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施作種種作用之行。",
        "from": "T32n1635_009:0072b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝慧智者即觀察佛身無漏之行。",
        "from": "T32n1635_009:0072b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便智者即修佛相好之行。",
        "from": "T32n1635_009:0072b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝慧智者即觀察一切行無生無起之行。",
        "from": "T32n1635_009:0072b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便智者即常思惟於三有中示現受生之行。",
        "from": "T32n1635_009:0072b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡意經云。",
        "from": "T32n1635_009:0072b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等是為菩薩方便。",
        "from": "T32n1635_009:0072b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復何等是菩薩勝慧。",
        "from": "T32n1635_009:0072b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂若入定時起大悲所緣深固之心觀察有情。",
        "from": "T32n1635_009:0072b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即方便若於定中住寂遍寂。",
        "from": "T32n1635_009:0072b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即勝慧。",
        "from": "T32n1635_009:0072b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入定時起大悲心隨順佛道。",
        "from": "T32n1635_009:0072b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即方便。",
        "from": "T32n1635_009:0072b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無所有依止觀察。",
        "from": "T32n1635_009:0072b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即勝慧。",
        "from": "T32n1635_009:0072b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入定時觀察普攝彼一切法。",
        "from": "T32n1635_009:0072b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即方便。",
        "from": "T32n1635_009:0072b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若觀法界無所分別。",
        "from": "T32n1635_009:0072b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即勝慧。",
        "from": "T32n1635_009:0072b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入定時佛身莊嚴所作現前。",
        "from": "T32n1635_009:0072b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即方便。",
        "from": "T32n1635_009:0072b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若觀察法身分位。",
        "from": "T32n1635_009:0072b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即勝慧。",
        "from": "T32n1635_009:0072b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰經云。",
        "from": "T32n1635_009:0072b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_009:0072b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏。",
        "from": "T32n1635_009:0072b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩有二相。",
        "from": "T32n1635_009:0072b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者信樂雜句文飾。",
        "from": "T32n1635_009:0072b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者不畏甚深之法。",
        "from": "T32n1635_009:0072b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實解入是為二相。",
        "from": "T32n1635_009:0072b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩信樂尊重雜句文飾者。",
        "from": "T32n1635_009:0072b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是為初學菩薩。",
        "from": "T32n1635_009:0072c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復於此清淨甚深經典。",
        "from": "T32n1635_009:0072c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普攝種種文義差別之門。",
        "from": "T32n1635_009:0072c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽受宣說生勝解者。",
        "from": "T32n1635_009:0072c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是菩薩久修梵行。",
        "from": "T32n1635_009:0072c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有二法。",
        "from": "T32n1635_009:0072c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即初學菩薩為自毀傷。",
        "from": "T32n1635_009:0072c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不於甚深法中調伏其心。",
        "from": "T32n1635_009:0072c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者於昔未聞甚深經典。",
        "from": "T32n1635_009:0072c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已驚怖生疑亦不隨順。",
        "from": "T32n1635_009:0072c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "返生輕謗作如是言。",
        "from": "T32n1635_009:0072c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我昔未聞此法從何所來。",
        "from": "T32n1635_009:0072c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者於大法器宣說甚深法者。",
        "from": "T32n1635_009:0072c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子所不樂親近亦不尊重。",
        "from": "T32n1635_009:0072c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時於中密說其過。",
        "from": "T32n1635_009:0072c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為二法。",
        "from": "T32n1635_009:0072c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有二法。",
        "from": "T32n1635_009:0072c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩雖信解甚深之法亦自毀傷。",
        "from": "T32n1635_009:0072c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能速證無生法忍。",
        "from": "T32n1635_009:0072c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者輕毀初學菩薩不為攝受。",
        "from": "T32n1635_009:0072c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為決擇復不教誨。",
        "from": "T32n1635_009:0072c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者雖信解甚深之法。",
        "from": "T32n1635_009:0072c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不習學亦不尊重。",
        "from": "T32n1635_009:0072c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不行財施法施攝受有情。",
        "from": "T32n1635_009:0072c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為二法。",
        "from": "T32n1635_009:0072c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中應知。",
        "from": "T32n1635_009:0072c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸有情解入諸佛菩薩大威德力。",
        "from": "T32n1635_009:0072c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯極難得。",
        "from": "T32n1635_009:0072c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等是為菩薩大威德力。",
        "from": "T32n1635_009:0072c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰經云。",
        "from": "T32n1635_009:0072c16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰言。",
        "from": "T32n1635_009:0072c16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大迦葉。",
        "from": "T32n1635_009:0072c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有十方世界現作魔王者。",
        "from": "T32n1635_009:0072c17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是住不可思議解脫菩薩。",
        "from": "T32n1635_009:0072c17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善方便成熟有情故現魔相。",
        "from": "T32n1635_009:0072c18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又十方世界或有菩薩從其求乞手足耳鼻血肉筋骨頭目身分妻子奴婢人民國邑象馬車乘。",
        "from": "T32n1635_009:0072c19_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡如是等或來求者。",
        "from": "T32n1635_009:0072c21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉給施。",
        "from": "T32n1635_009:0072c21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩以如是相故行逼迫。",
        "from": "T32n1635_009:0072c21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此等皆是住不可思議解脫菩薩。",
        "from": "T32n1635_009:0072c22_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉。",
        "from": "T32n1635_009:0072c23_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如龍象蹴踏非驢所堪。",
        "from": "T32n1635_009:0072c23_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫亦復如是不能如是逼迫菩薩。",
        "from": "T32n1635_009:0072c23_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而菩薩者乃能如是逼迫菩薩。",
        "from": "T32n1635_009:0072c24_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘寶要義論卷第九",
        "from": "T32n1635_009:0072c26_0",
        "context_with_next_sentence": false
    }
]