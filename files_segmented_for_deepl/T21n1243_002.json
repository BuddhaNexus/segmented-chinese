[
    {
        "source_sentence": "佛說出生一切如來法眼遍照大",
        "from": "T21n1243_002:0211b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力明王經卷下",
        "from": "T21n1243_002:0211b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度摩伽陀國那爛陀寺",
        "from": "T21n1243_002:0211b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏賜紫沙門臣法護奉　詔譯",
        "from": "T21n1243_002:0211b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩顧[辦力+目]曼拏攞眾。",
        "from": "T21n1243_002:0211b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目如師子威德自在。",
        "from": "T21n1243_002:0211b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為伊舍那天步多主說大力明王曼拏攞法。",
        "from": "T21n1243_002:0211b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告言聖者若有入此大忿怒曼拏攞中者。",
        "from": "T21n1243_002:0211b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能成就一切事業命無中夭。",
        "from": "T21n1243_002:0211b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切惡病纏身不生魔界。",
        "from": "T21n1243_002:0211b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生見者歡喜。",
        "from": "T21n1243_002:0211b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能遠離一切冤家。",
        "from": "T21n1243_002:0211b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後一切真言教法悉得成就。",
        "from": "T21n1243_002:0211b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能成就一切忿怒。",
        "from": "T21n1243_002:0211b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切灌頂中福故吉祥莊嚴。",
        "from": "T21n1243_002:0211b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時先安布此大忿怒曼拏攞。",
        "from": "T21n1243_002:0211b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此經一萬遍得善境界。",
        "from": "T21n1243_002:0211b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得覩此曼拏攞教主印可。",
        "from": "T21n1243_002:0211b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後方學此真言壇法。",
        "from": "T21n1243_002:0211b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須八日不食。",
        "from": "T21n1243_002:0211b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命三寶發大慈悲菩提心故。",
        "from": "T21n1243_002:0211b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依時作法成就事故。",
        "from": "T21n1243_002:0211b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "關閉冤家死者還活。",
        "from": "T21n1243_002:0211b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此忿怒大威德。",
        "from": "T21n1243_002:0211b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令大業魔王歸依三寶佛法僧眾。",
        "from": "T21n1243_002:0211b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復一切惡魔鬼魅而不殄滅。",
        "from": "T21n1243_002:0211b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王若有受持之者。",
        "from": "T21n1243_002:0211b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能降伏一切冤魔。",
        "from": "T21n1243_002:0211b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切藥叉洛　乞叉(二合)畢哩(二合)哆。",
        "from": "T21n1243_002:0211b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯吒布怛曩。",
        "from": "T21n1243_002:0211b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拏倪寧。",
        "from": "T21n1243_002:0211c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑[亭*夜](切身)薩嗘攞。",
        "from": "T21n1243_002:0211c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦波三麼(二合)囉。",
        "from": "T21n1243_002:0211c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離如是等一切怕怖。",
        "from": "T21n1243_002:0211c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切枷鎖一切中天。",
        "from": "T21n1243_002:0211c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切迷惑一切疫病禁繫貧窮。",
        "from": "T21n1243_002:0211c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此正法若有讀誦受持。",
        "from": "T21n1243_002:0211c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得一切財寶無所乏少。",
        "from": "T21n1243_002:0211c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天早時於七晝夜中。",
        "from": "T21n1243_002:0211c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦此大力明王即降大雨。",
        "from": "T21n1243_002:0211c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不降雨令彼天眾破壞殄滅。",
        "from": "T21n1243_002:0211c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯哩(二合)瑟拏(二合)龍王設羯囉(二合)龍王阿難多龍王。",
        "from": "T21n1243_002:0211c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等龍王眾令降大雨。",
        "from": "T21n1243_002:0211c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不降時亦令彼死。",
        "from": "T21n1243_002:0211c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復此經如前依法。",
        "from": "T21n1243_002:0211c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四方河岸海岸池潭四邊舍利塔前。",
        "from": "T21n1243_002:0211c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛手大菩薩。",
        "from": "T21n1243_002:0211c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以赤栴檀迦囉尾囉花紅蓮花阿底目羯哆(二合)花。",
        "from": "T21n1243_002:0211c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繒綵幢幡皆以赤色。",
        "from": "T21n1243_002:0211c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水滿瓶如法依時。",
        "from": "T21n1243_002:0211c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精勤念誦得大福聚。",
        "from": "T21n1243_002:0211c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復或以樺皮。",
        "from": "T21n1243_002:0211c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此大力明王真言。",
        "from": "T21n1243_002:0211c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於旌旗之上或以頂戴。",
        "from": "T21n1243_002:0211c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得入陣無傷相敵得勝。",
        "from": "T21n1243_002:0211c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弓箭槍刀如花被體。",
        "from": "T21n1243_002:0211c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者歡喜而生愛敬。",
        "from": "T21n1243_002:0211c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時魔王遶佛三匝退坐一面。",
        "from": "T21n1243_002:0211c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊云何名大力。",
        "from": "T21n1243_002:0211c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告魔王如來名大力。",
        "from": "T21n1243_002:0211c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法藏名大力。",
        "from": "T21n1243_002:0211c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法名大力法眼名大力。",
        "from": "T21n1243_002:0211c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘名大力。",
        "from": "T21n1243_002:0211c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手名大力。",
        "from": "T21n1243_002:0211c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時魔王讚金剛手祕密主言。",
        "from": "T21n1243_002:0211c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉祕密主。",
        "from": "T21n1243_002:0211c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從今向去不敢惱亂一切修行之者。",
        "from": "T21n1243_002:0211c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓歸三寶佛法僧眾。",
        "from": "T21n1243_002:0211c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願為優婆塞常持淨戒。",
        "from": "T21n1243_002:0211c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願天解脫為我安樂。",
        "from": "T21n1243_002:0211c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為法眾擁護受持大力明王及諸眾生。",
        "from": "T21n1243_002:0211c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告魔王言。",
        "from": "T21n1243_002:0211c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業種此經若有受持讀誦。",
        "from": "T21n1243_002:0211c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得遠離地獄餓鬼畜生閻羅王界種種苦惱當得生天。",
        "from": "T21n1243_002:0211c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經二十千劫常為天主。",
        "from": "T21n1243_002:0211c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下生閻浮後為金輪王王四天下。",
        "from": "T21n1243_002:0211c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世復得阿耨多羅三藐三菩提。",
        "from": "T21n1243_002:0211c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王乃至清淨不清淨。",
        "from": "T21n1243_002:0211c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食與不食。",
        "from": "T21n1243_002:0211c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨戒不淨戒俱無障礙。",
        "from": "T21n1243_002:0211c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但持此真言所求皆得。",
        "from": "T21n1243_002:0211c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況依法淨戒無所不從。",
        "from": "T21n1243_002:0212a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時尊者須菩提與自眾俱來在會坐。",
        "from": "T21n1243_002:0212a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起白佛言。",
        "from": "T21n1243_002:0212a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何受持此大力明王心陀羅尼而得解脫。",
        "from": "T21n1243_002:0212a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言須菩提汝問金剛手祕密主。",
        "from": "T21n1243_002:0212a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故時須菩提即白金剛手言。",
        "from": "T21n1243_002:0212a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密主云何受持此大力明王心所得何果。",
        "from": "T21n1243_002:0212a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T21n1243_002:0212a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得倉庫盈滿名衣上服金銀珍寶象馬牛羊所求施與。",
        "from": "T21n1243_002:0212a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提言。",
        "from": "T21n1243_002:0212a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是等廣大果報。",
        "from": "T21n1243_002:0212a08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言須菩提如是如是。",
        "from": "T21n1243_002:0212a08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至盡眾生煩惱果報故。",
        "from": "T21n1243_002:0212a09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為住功德果故。",
        "from": "T21n1243_002:0212a10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至阿耨多羅三藐三菩提功德道故。",
        "from": "T21n1243_002:0212a10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須菩提言善哉善哉金剛手。",
        "from": "T21n1243_002:0212a11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以祕密相種種莊嚴。",
        "from": "T21n1243_002:0212a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大智力灌頂辯才得無相施。",
        "from": "T21n1243_002:0212a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大戒大智慧。",
        "from": "T21n1243_002:0212a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大福大力。",
        "from": "T21n1243_002:0212a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大威德大功德頂。",
        "from": "T21n1243_002:0212a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王經。",
        "from": "T21n1243_002:0212a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得十方諸佛同來灌頂。",
        "from": "T21n1243_002:0212a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手此經威德為。",
        "from": "T21n1243_002:0212a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如來摩頂授記得大安樂。",
        "from": "T21n1243_002:0212a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼或於山間石壁曠野陂湖江河池潭。",
        "from": "T21n1243_002:0212a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦遠離一切怖畏。",
        "from": "T21n1243_002:0212a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T21n1243_002:0212a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白世尊言此經若有持者復為他說。",
        "from": "T21n1243_002:0212a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命百歲無諸橫苦。",
        "from": "T21n1243_002:0212a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手復白世尊言。",
        "from": "T21n1243_002:0212a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此正法得福如是。",
        "from": "T21n1243_002:0212a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何名之復云何受持。",
        "from": "T21n1243_002:0212a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言金剛手此經名出生一切如來故。",
        "from": "T21n1243_002:0212a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名法遍照故。",
        "from": "T21n1243_002:0212a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名法眼故。",
        "from": "T21n1243_002:0212a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名一切義成就故。",
        "from": "T21n1243_002:0212a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名一切如來法雲故。",
        "from": "T21n1243_002:0212a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名盡一切業障總持故。",
        "from": "T21n1243_002:0212a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名成就一切明王故亦名般若波羅蜜多故。",
        "from": "T21n1243_002:0212a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名一切如來最初。",
        "from": "T21n1243_002:0212a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界故亦名大力明王故。",
        "from": "T21n1243_002:0212a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手若有聞此正法。",
        "from": "T21n1243_002:0212a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能受持讀誦書寫供養。",
        "from": "T21n1243_002:0212a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如供養過去未來現在諸佛世尊全身舍利塔故。",
        "from": "T21n1243_002:0212a27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言善哉善哉。",
        "from": "T21n1243_002:0212a28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說如是甚深微妙正法功德變化莊嚴我。",
        "from": "T21n1243_002:0212a28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當受持佛言金剛手若有善男子善女人。",
        "from": "T21n1243_002:0212a29_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此正法者。",
        "from": "T21n1243_002:0212b01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸業障如河岸樹速疾破壞。",
        "from": "T21n1243_002:0212b02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以塗香燒香及眾妙花。",
        "from": "T21n1243_002:0212b02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種幢幡等而作供養。",
        "from": "T21n1243_002:0212b03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即獲廣大無量無邊福德藏故。",
        "from": "T21n1243_002:0212b04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障難。",
        "from": "T21n1243_002:0212b04_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受持讀誦解說此經之地。",
        "from": "T21n1243_002:0212b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸天龍阿脩羅乾闥婆等。",
        "from": "T21n1243_002:0212b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切人天常以守護供養一切魔王不敢違越。",
        "from": "T21n1243_002:0212b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大力明王心若常憶念。",
        "from": "T21n1243_002:0212b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得八千菩薩及諸如來。",
        "from": "T21n1243_002:0212b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大神仙天人龍王。",
        "from": "T21n1243_002:0212b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿脩羅乾闥婆等稱揚讚歎。",
        "from": "T21n1243_002:0212b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時釋迦牟尼如來。",
        "from": "T21n1243_002:0212b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告金剛手言。",
        "from": "T21n1243_002:0212b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有輕慢生高舉心者。",
        "from": "T21n1243_002:0212b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮八大地獄。",
        "from": "T21n1243_002:0212b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手若有受持讀誦。",
        "from": "T21n1243_002:0212b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他解說供養恭敬尊重讚歎。",
        "from": "T21n1243_002:0212b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得無量無邊伏藏故若聞一字一句。",
        "from": "T21n1243_002:0212b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得究竟不退菩薩道。",
        "from": "T21n1243_002:0212b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛手言。",
        "from": "T21n1243_002:0212b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來之法極大甚深微妙難測。",
        "from": "T21n1243_002:0212b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可量不可思不可。",
        "from": "T21n1243_002:0212b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "議時諸眾生心自迷惑而不能了。",
        "from": "T21n1243_002:0212b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言金剛手此經為一切眾生說。",
        "from": "T21n1243_002:0212b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為勸誘一切眾生故。",
        "from": "T21n1243_002:0212b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲安樂一切眾生故。",
        "from": "T21n1243_002:0212b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為增益一切眾生故。",
        "from": "T21n1243_002:0212b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生得灌頂故。",
        "from": "T21n1243_002:0212b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生離諸貧窮。",
        "from": "T21n1243_002:0212b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅諸業障得大吉祥故。",
        "from": "T21n1243_002:0212b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令一切眾生得阿耨多羅三藐三菩提故。",
        "from": "T21n1243_002:0212b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時八千菩薩聞是說已。",
        "from": "T21n1243_002:0212b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛三匝合掌恭敬。",
        "from": "T21n1243_002:0212b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉善哉釋迦牟尼如來善說此法。",
        "from": "T21n1243_002:0212b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸菩薩為釋迦牟尼如來名故。",
        "from": "T21n1243_002:0212b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是言。",
        "from": "T21n1243_002:0212b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是世尊此實善說。",
        "from": "T21n1243_002:0212b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告金剛手言。",
        "from": "T21n1243_002:0212b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密主我說此大力威德法門。",
        "from": "T21n1243_002:0212b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝諸魔王眷屬皆悉來集。",
        "from": "T21n1243_002:0212b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切障難更不復作。",
        "from": "T21n1243_002:0212b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所求皆得圓滿。",
        "from": "T21n1243_002:0212b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至阿耨多羅三藐三菩提。",
        "from": "T21n1243_002:0212b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復說此陀羅尼。",
        "from": "T21n1243_002:0212b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1243_002:0212b29_0",
        "context_with_next_sentence": true
    },
