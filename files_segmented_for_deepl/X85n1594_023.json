[
    {
        "source_sentence": "佛祖綱目卷第二十三(冬字號)",
        "from": "X85n1594_023:0585b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(漢後主延熈七年。",
        "from": "X85n1594_023:0585b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魏正始五年。",
        "from": "X85n1594_023:0585b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳赤烏七年起)己巳(魏嘉平)辛未(吳大元)壬申(吳建興)甲戌(魏正元。",
        "from": "X85n1594_023:0585b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳五鳳)丙子(魏甘露。",
        "from": "X85n1594_023:0585b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳太平)戊寅(漢景耀。",
        "from": "X85n1594_023:0585b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳永安)庚辰(魏景元)甲申(魏咸熈。",
        "from": "X85n1594_023:0585b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳元興)乙酉(晉武帝泰始元年。",
        "from": "X85n1594_023:0585b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳甘露)丙戌(吳寶鼎)己丑(吳建衡)壬辰(吳鳳凰)乙未(晉咸寧。",
        "from": "X85n1594_023:0585b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳天冊)丙申(吳天璽)丁酉(吳天紀)庚子(晉太)庚戌(晉惠帝永熈元年)辛亥(改元康。",
        "from": "X85n1594_023:0585b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又改永平)庚申(改永康)辛酉(改永寧)壬戌(改大安)癸亥(晉惠帝大安二年止)晉。",
        "from": "X85n1594_023:0585b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "司馬姓。",
        "from": "X85n1594_023:0585b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西晉起武帝乙酉。",
        "from": "X85n1594_023:0585b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止愍帝丙子。",
        "from": "X85n1594_023:0585b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四主共五十二年。",
        "from": "X85n1594_023:0585b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東晉起元帝丁丑。",
        "from": "X85n1594_023:0585b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止恭帝己未。",
        "from": "X85n1594_023:0585b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二主。",
        "from": "X85n1594_023:0585b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共一百四年。",
        "from": "X85n1594_023:0585b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二晉共一百五十六年。",
        "from": "X85n1594_023:0585b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(丁卯)二十四祖師子比丘傳法婆舍斯多師子比丘。",
        "from": "X85n1594_023:0585b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中印度人。",
        "from": "X85n1594_023:0585b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓婆羅門。",
        "from": "X85n1594_023:0585b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法遊方。",
        "from": "X85n1594_023:0585b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至罽賓國。",
        "from": "X85n1594_023:0585b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有沙門波利迦。",
        "from": "X85n1594_023:0585b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本習小乘禪觀。",
        "from": "X85n1594_023:0585b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其學徒有五。",
        "from": "X85n1594_023:0585b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰禪定。",
        "from": "X85n1594_023:0585b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰知見。",
        "from": "X85n1594_023:0585b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰執相。",
        "from": "X85n1594_023:0585b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰捨相。",
        "from": "X85n1594_023:0585b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰不語。",
        "from": "X85n1594_023:0585b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子謂持不語者曰。",
        "from": "X85n1594_023:0585b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教勤衍般若。",
        "from": "X85n1594_023:0585c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孰為不語。",
        "from": "X85n1594_023:0585c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而反佛說耶。",
        "from": "X85n1594_023:0585c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂捨相者曰佛教威儀具足。",
        "from": "X85n1594_023:0585c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行清白。",
        "from": "X85n1594_023:0585c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈捨相耶。",
        "from": "X85n1594_023:0585c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂執相者曰。",
        "from": "X85n1594_023:0585c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛土清淨。",
        "from": "X85n1594_023:0585c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在無著。",
        "from": "X85n1594_023:0585c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何執相耶。",
        "from": "X85n1594_023:0585c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂知見者曰。",
        "from": "X85n1594_023:0585c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛知見。",
        "from": "X85n1594_023:0585c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所得故。",
        "from": "X85n1594_023:0585c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法微玅。",
        "from": "X85n1594_023:0585c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺聞不及。",
        "from": "X85n1594_023:0585c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無為無相。",
        "from": "X85n1594_023:0585c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何知見耶。",
        "from": "X85n1594_023:0585c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾皆服從。",
        "from": "X85n1594_023:0585c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟禪定師達磨達者。",
        "from": "X85n1594_023:0585c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞四眾義屈。",
        "from": "X85n1594_023:0585c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憤悱而來。",
        "from": "X85n1594_023:0585c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_023:0585c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者習定。",
        "from": "X85n1594_023:0585c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何當來此。",
        "from": "X85n1594_023:0585c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既至於此。",
        "from": "X85n1594_023:0585c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡云習定。",
        "from": "X85n1594_023:0585c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼曰。",
        "from": "X85n1594_023:0585c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我雖來此。",
        "from": "X85n1594_023:0585c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心亦不亂。",
        "from": "X85n1594_023:0585c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定隨人習。",
        "from": "X85n1594_023:0585c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈在處所。",
        "from": "X85n1594_023:0585c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_023:0585c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者既來。",
        "from": "X85n1594_023:0585c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其習亦至。",
        "from": "X85n1594_023:0585c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既無處所。",
        "from": "X85n1594_023:0585c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈在人習。",
        "from": "X85n1594_023:0585c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼曰。",
        "from": "X85n1594_023:0585c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定習人故。",
        "from": "X85n1594_023:0585c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非人習定。",
        "from": "X85n1594_023:0585c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當來此。",
        "from": "X85n1594_023:0585c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其定常習。",
        "from": "X85n1594_023:0585c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_023:0585c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人非習定。",
        "from": "X85n1594_023:0585c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定習人故。",
        "from": "X85n1594_023:0585c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當自來時。",
        "from": "X85n1594_023:0585c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其定誰習。",
        "from": "X85n1594_023:0585c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼曰。",
        "from": "X85n1594_023:0585c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如淨明珠。",
        "from": "X85n1594_023:0585c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外無翳。",
        "from": "X85n1594_023:0585c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定若通達。",
        "from": "X85n1594_023:0585c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必當如此。",
        "from": "X85n1594_023:0585c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_023:0585c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定若通達。",
        "from": "X85n1594_023:0585c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一似明珠。",
        "from": "X85n1594_023:0585c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今見仁者。",
        "from": "X85n1594_023:0585c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非珠之徒。",
        "from": "X85n1594_023:0585c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼曰。",
        "from": "X85n1594_023:0585c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其珠明徹。",
        "from": "X85n1594_023:0585c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外悉定。",
        "from": "X85n1594_023:0585c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我心不亂。",
        "from": "X85n1594_023:0585c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶若此淨。",
        "from": "X85n1594_023:0585c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_023:0585c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其珠無內外。",
        "from": "X85n1594_023:0585c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者何能定。",
        "from": "X85n1594_023:0585c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穢物非動搖。",
        "from": "X85n1594_023:0585c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此定不是淨。",
        "from": "X85n1594_023:0585c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達磨達聞已。",
        "from": "X85n1594_023:0585c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂作禮曰。",
        "from": "X85n1594_023:0585c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於學道。",
        "from": "X85n1594_023:0585c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋虗勞耳。",
        "from": "X85n1594_023:0585c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者幸有以教我。",
        "from": "X85n1594_023:0585c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慇懃哀請。",
        "from": "X85n1594_023:0585c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_023:0585c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛禪定。",
        "from": "X85n1594_023:0585c16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有所得。",
        "from": "X85n1594_023:0585c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛覺道。",
        "from": "X85n1594_023:0585c16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有所證。",
        "from": "X85n1594_023:0585c16_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無得無證。",
        "from": "X85n1594_023:0585c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真解脫。",
        "from": "X85n1594_023:0585c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酬因答果。",
        "from": "X85n1594_023:0585c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世之業報。",
        "from": "X85n1594_023:0585c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此法中。",
        "from": "X85n1594_023:0585c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉不如是。",
        "from": "X85n1594_023:0585c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達磨達蒙師子開悟。",
        "from": "X85n1594_023:0585c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心地朗然。",
        "from": "X85n1594_023:0585c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子既攝五眾。",
        "from": "X85n1594_023:0585c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名聞遐邇。",
        "from": "X85n1594_023:0585c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方求法嗣。",
        "from": "X85n1594_023:0585c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇一長者引其子來。",
        "from": "X85n1594_023:0585c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X85n1594_023:0585c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此子名斯多。",
        "from": "X85n1594_023:0585c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生便拳左手。",
        "from": "X85n1594_023:0585c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年二十矣。",
        "from": "X85n1594_023:0585c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終未能舒。",
        "from": "X85n1594_023:0585c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願尊者示其宿因。",
        "from": "X85n1594_023:0585c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子覩之。",
        "from": "X85n1594_023:0585c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以手接曰。",
        "from": "X85n1594_023:0585c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可還我珠。",
        "from": "X85n1594_023:0585c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子遽開手奉珠。",
        "from": "X85n1594_023:0585c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾皆驚異。",
        "from": "X85n1594_023:0585c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子曰。",
        "from": "X85n1594_023:0585c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾前報為僧。",
        "from": "X85n1594_023:0585c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有童子名婆舍。",
        "from": "X85n1594_023:0585c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾甞赴西海齋。",
        "from": "X85n1594_023:0585c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受嚫珠付之。",
        "from": "X85n1594_023:0585c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今還我珠。",
        "from": "X85n1594_023:0585c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理固然矣。",
        "from": "X85n1594_023:0585c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者遂令出家。",
        "from": "X85n1594_023:0585c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子會眾聖。",
        "from": "X85n1594_023:0585c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與受具。",
        "from": "X85n1594_023:0585c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前緣故。",
        "from": "X85n1594_023:0585c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名婆舍斯多。",
        "from": "X85n1594_023:0586a01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子即謂之曰。",
        "from": "X85n1594_023:0586a01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾師密有懸記。",
        "from": "X85n1594_023:0586a01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罹難非久。",
        "from": "X85n1594_023:0586a01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來正法眼藏。",
        "from": "X85n1594_023:0586a02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當付汝。",
        "from": "X85n1594_023:0586a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝應保護。",
        "from": "X85n1594_023:0586a02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普潤來際。",
        "from": "X85n1594_023:0586a02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "X85n1594_023:0586a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正說知見時。",
        "from": "X85n1594_023:0586a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知見俱是心。",
        "from": "X85n1594_023:0586a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當心即知見。",
        "from": "X85n1594_023:0586a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知見即於今。",
        "from": "X85n1594_023:0586a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子說偈已。",
        "from": "X85n1594_023:0586a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以僧伽黎。",
        "from": "X85n1594_023:0586a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密付斯多。",
        "from": "X85n1594_023:0586a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾之他國。",
        "from": "X85n1594_023:0586a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨機演化。",
        "from": "X85n1594_023:0586a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯多受教。",
        "from": "X85n1594_023:0586a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直抵南天竺。",
        "from": "X85n1594_023:0586a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子謂。",
        "from": "X85n1594_023:0586a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難不可以苟免。",
        "from": "X85n1594_023:0586a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨留罽賓。",
        "from": "X85n1594_023:0586a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達磨達恨師子不令嗣祖。",
        "from": "X85n1594_023:0586a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日渡谿。",
        "from": "X85n1594_023:0586a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見女子浣露其足。",
        "from": "X85n1594_023:0586a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念曰。",
        "from": "X85n1594_023:0586a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此脛乃爾白晢耶。",
        "from": "X85n1594_023:0586a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子忽至曰。",
        "from": "X85n1594_023:0586a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日之心。",
        "from": "X85n1594_023:0586a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可嗣祖乎。",
        "from": "X85n1594_023:0586a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(己卯)二十四祖師子尊者示寂",
        "from": "X85n1594_023:0586a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子住罽賓國。",
        "from": "X85n1594_023:0586a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有外道二人。",
        "from": "X85n1594_023:0586a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名摩目多。",
        "from": "X85n1594_023:0586a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二名都洛遮。",
        "from": "X85n1594_023:0586a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相與隱山。",
        "from": "X85n1594_023:0586a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學諸幻法。",
        "from": "X85n1594_023:0586a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲共謀亂。",
        "from": "X85n1594_023:0586a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂易其徒。",
        "from": "X85n1594_023:0586a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為僧形。",
        "from": "X85n1594_023:0586a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潛入王宮。",
        "from": "X85n1594_023:0586a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不效為國所擒。",
        "from": "X85n1594_023:0586a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其王彌羅崛大怒曰。",
        "from": "X85n1594_023:0586a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我素重佛。",
        "from": "X85n1594_023:0586a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以為此大逆。",
        "from": "X85n1594_023:0586a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂勅誅沙門。",
        "from": "X85n1594_023:0586a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀佛寺。",
        "from": "X85n1594_023:0586a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王自秉劍。",
        "from": "X85n1594_023:0586a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至師子前。",
        "from": "X85n1594_023:0586a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X85n1594_023:0586a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師得蘊空否。",
        "from": "X85n1594_023:0586a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰已得蘊空。",
        "from": "X85n1594_023:0586a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X85n1594_023:0586a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離生死否。",
        "from": "X85n1594_023:0586a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰已離生死。",
        "from": "X85n1594_023:0586a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X85n1594_023:0586a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既離生死。",
        "from": "X85n1594_023:0586a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可施我頭。",
        "from": "X85n1594_023:0586a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰身非我有。",
        "from": "X85n1594_023:0586a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何吝於頭。",
        "from": "X85n1594_023:0586a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王即揮刃斷師子首。",
        "from": "X85n1594_023:0586a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白乳湧。",
        "from": "X85n1594_023:0586a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高數尺。",
        "from": "X85n1594_023:0586a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王之右臂。",
        "from": "X85n1594_023:0586a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋亦墮地。",
        "from": "X85n1594_023:0586a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日而終。",
        "from": "X85n1594_023:0586a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太子光首泣曰。",
        "from": "X85n1594_023:0586a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾父何故。",
        "from": "X85n1594_023:0586a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自取其禍。",
        "from": "X85n1594_023:0586a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延眾懺悔。",
        "from": "X85n1594_023:0586a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時象白山有仙人。",
        "from": "X85n1594_023:0586a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深明因果言。",
        "from": "X85n1594_023:0586a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子與羅崛。",
        "from": "X85n1594_023:0586a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往世皆為白衣。",
        "from": "X85n1594_023:0586a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以嫉法勝故。",
        "from": "X85n1594_023:0586a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰戕於崛。",
        "from": "X85n1594_023:0586a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃今償焉眾遂以師子報體。",
        "from": "X85n1594_023:0586a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建塔於被害處。",
        "from": "X85n1594_023:0586a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土魏甘露四年己卯也。",
        "from": "X85n1594_023:0586a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(乙酉)三藏僧會諫毀佛寺",
        "from": "X85n1594_023:0586a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳主孫皓。",
        "from": "X85n1594_023:0586a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下令遍毀神祠。",
        "from": "X85n1594_023:0586a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波及梵宇。",
        "from": "X85n1594_023:0586a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群臣諫曰。",
        "from": "X85n1594_023:0586a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先帝感瑞創寺。",
        "from": "X85n1594_023:0586a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可毀也。",
        "from": "X85n1594_023:0586a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皓遂召康僧會。",
        "from": "X85n1594_023:0586a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X85n1594_023:0586a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "X85n1594_023:0586a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡報應。",
        "from": "X85n1594_023:0586a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可得聞乎。",
        "from": "X85n1594_023:0586b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會曰。",
        "from": "X85n1594_023:0586b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明主以孝慈治天下。",
        "from": "X85n1594_023:0586b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則赤烏翔而老人見。",
        "from": "X85n1594_023:0586b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以仁德育萬物。",
        "from": "X85n1594_023:0586b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則醴泉冽而嘉禾茁。",
        "from": "X85n1594_023:0586b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善既有應。",
        "from": "X85n1594_023:0586b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡亦如之。",
        "from": "X85n1594_023:0586b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故為惡於隱。",
        "from": "X85n1594_023:0586b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼得而誅之。",
        "from": "X85n1594_023:0586b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為惡於顯。",
        "from": "X85n1594_023:0586b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人得而誅之。",
        "from": "X85n1594_023:0586b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易稱積善餘慶詩美求福不回。",
        "from": "X85n1594_023:0586b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖儒典之格言。",
        "from": "X85n1594_023:0586b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實佛教之明訓。",
        "from": "X85n1594_023:0586b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皓曰。",
        "from": "X85n1594_023:0586b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則周孔既明。",
        "from": "X85n1594_023:0586b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安用佛教。",
        "from": "X85n1594_023:0586b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會曰。",
        "from": "X85n1594_023:0586b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周孔不欲深言。",
        "from": "X85n1594_023:0586b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故略示其跡。",
        "from": "X85n1594_023:0586b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教不止淺言。",
        "from": "X85n1594_023:0586b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故詳示其要。",
        "from": "X85n1594_023:0586b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為善也。",
        "from": "X85n1594_023:0586b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人惟恐善之不多。",
        "from": "X85n1594_023:0586b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陛下以為嫌。",
        "from": "X85n1594_023:0586b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何也。",
        "from": "X85n1594_023:0586b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皓無以對。",
        "from": "X85n1594_023:0586b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂罷毀寺之令○天竺耆域初來交廣。",
        "from": "X85n1594_023:0586b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多著靈異。",
        "from": "X85n1594_023:0586b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至洛陽。",
        "from": "X85n1594_023:0586b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見比丘衣服華麗。",
        "from": "X85n1594_023:0586b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃曰。",
        "from": "X85n1594_023:0586b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大違戒律。",
        "from": "X85n1594_023:0586b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非佛意也。",
        "from": "X85n1594_023:0586b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見帝都宮室曰。",
        "from": "X85n1594_023:0586b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大略似忉利天宮。",
        "from": "X85n1594_023:0586b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然人天殊分。",
        "from": "X85n1594_023:0586b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疲民之力。",
        "from": "X85n1594_023:0586b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繕刻如此。",
        "from": "X85n1594_023:0586b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不亦侈乎。",
        "from": "X85n1594_023:0586b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大安元年。",
        "from": "X85n1594_023:0586b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知洛將亂。",
        "from": "X85n1594_023:0586b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭歸天竺。",
        "from": "X85n1594_023:0586b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有僧乞一言為識。",
        "from": "X85n1594_023:0586b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "域令集眾。",
        "from": "X85n1594_023:0586b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陞座曰。",
        "from": "X85n1594_023:0586b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守口攝身意。",
        "from": "X85n1594_023:0586b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎莫犯眾惡。",
        "from": "X85n1594_023:0586b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行一切善。",
        "from": "X85n1594_023:0586b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是得度世。",
        "from": "X85n1594_023:0586b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖便默。",
        "from": "X85n1594_023:0586b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是數百人。",
        "from": "X85n1594_023:0586b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各請域中食。",
        "from": "X85n1594_023:0586b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "域皆許往。",
        "from": "X85n1594_023:0586b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日五百舍。",
        "from": "X85n1594_023:0586b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有一域分身受食。",
        "from": "X85n1594_023:0586b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第二十三",
        "from": "X85n1594_023:0586b17_0",
        "context_with_next_sentence": false
    }
]