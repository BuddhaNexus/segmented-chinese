[
    {
        "source_sentence": "佛說一切如來真實攝大乘現證",
        "from": "T18n0882_002:0343c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧大教王經卷第二",
        "from": "T18n0882_002:0343c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T18n0882_002:0343c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫沙門臣施護等",
        "from": "T18n0882_002:0343c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯",
        "from": "T18n0882_002:0343c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛界大曼拏羅廣大儀軌分第一之二爾時世尊。",
        "from": "T18n0882_002:0343c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復入摩囉大菩薩三昧。",
        "from": "T18n0882_002:0343c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生薩埵加持金剛三摩地。",
        "from": "T18n0882_002:0343c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名一切如來隨愛樂三昧。",
        "from": "T18n0882_002:0343c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切如來心。",
        "from": "T18n0882_002:0343c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心出說是大明曰。",
        "from": "T18n0882_002:0343c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)囉(引)誐(一句)纔出一切如來心時。",
        "from": "T18n0882_002:0343c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼如是具德持金剛者。",
        "from": "T18n0882_002:0343c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成一切如來華器仗。",
        "from": "T18n0882_002:0343c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為出現已。",
        "from": "T18n0882_002:0343c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入世尊大毘盧遮那如來心。",
        "from": "T18n0882_002:0343c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "T18n0882_002:0343c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是出現大金剛箭相。",
        "from": "T18n0882_002:0343c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛掌中。",
        "from": "T18n0882_002:0343c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後從彼金剛箭相中。",
        "from": "T18n0882_002:0343c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出一切世界極微塵量等如來像。",
        "from": "T18n0882_002:0343c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作一切如來隨愛樂事。",
        "from": "T18n0882_002:0343c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等以一切佛神通游戲。",
        "from": "T18n0882_002:0343c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切世界廣施作已。",
        "from": "T18n0882_002:0343c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼摩囉性。",
        "from": "T18n0882_002:0343c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛薩埵三摩地。",
        "from": "T18n0882_002:0343c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙堅牢故合為一體。",
        "from": "T18n0882_002:0343c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生摩囉大菩薩身。",
        "from": "T18n0882_002:0343c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住世尊大毘盧遮那如來心。",
        "from": "T18n0882_002:0343c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此頌曰。",
        "from": "T18n0882_002:0343c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大哉我本自性淨　　一切隨染自然生　由本清淨離諸染　　是故以染而調伏是時摩囉大菩薩身。",
        "from": "T18n0882_002:0343c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世尊心下。",
        "from": "T18n0882_002:0343c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來左月輪中。",
        "from": "T18n0882_002:0343c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理而住復請教示。",
        "from": "T18n0882_002:0343c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T18n0882_002:0343c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入一切如來隨愛樂金剛三摩地。",
        "from": "T18n0882_002:0343c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來摧伏金剛三昧。",
        "from": "T18n0882_002:0343c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於普盡無餘諸有情界。",
        "from": "T18n0882_002:0343c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉使愛樂。",
        "from": "T18n0882_002:0343c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆令獲得適悅快樂。",
        "from": "T18n0882_002:0343c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得一切如來摩囉事業最上悉地殊勝之果。",
        "from": "T18n0882_002:0343c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以金剛箭。",
        "from": "T18n0882_002:0344a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授與摩囉大菩薩雙手掌中。",
        "from": "T18n0882_002:0344a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來。",
        "from": "T18n0882_002:0344a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為立名號金剛弓。",
        "from": "T18n0882_002:0344a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛弓灌頂法而為灌頂。",
        "from": "T18n0882_002:0344a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛弓菩薩摩訶薩。",
        "from": "T18n0882_002:0344a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以彼金剛箭。",
        "from": "T18n0882_002:0344a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向一切如來作摩囉事。",
        "from": "T18n0882_002:0344a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此頌曰。",
        "from": "T18n0882_002:0344a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此是一切大覺尊　　染智清淨無瑕穢　以彼染法害清淨　　是故常施諸安樂爾時世尊。",
        "from": "T18n0882_002:0344a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復入歡喜王大菩薩三昧。",
        "from": "T18n0882_002:0344a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生薩埵加持金剛三摩地。",
        "from": "T18n0882_002:0344a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名一切如來極喜三昧。",
        "from": "T18n0882_002:0344a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切如來心。",
        "from": "T18n0882_002:0344a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心出說是大明曰。",
        "from": "T18n0882_002:0344a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)娑(引)度(一句)纔出一切如來心時。",
        "from": "T18n0882_002:0344a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼如是具德持金剛者。",
        "from": "T18n0882_002:0344a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成金剛善哉相。",
        "from": "T18n0882_002:0344a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入世尊大毘盧遮那如來心。",
        "from": "T18n0882_002:0344a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "T18n0882_002:0344a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是出現金剛喜像。",
        "from": "T18n0882_002:0344a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛掌中。",
        "from": "T18n0882_002:0344a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後從彼金剛喜像中。",
        "from": "T18n0882_002:0344a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出一切世界極微塵量等如來像。",
        "from": "T18n0882_002:0344a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作一切善哉等事。",
        "from": "T18n0882_002:0344a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來神通游戲。",
        "from": "T18n0882_002:0344a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切世界廣施作已。",
        "from": "T18n0882_002:0344a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼極喜王性。",
        "from": "T18n0882_002:0344a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛薩埵三摩地。",
        "from": "T18n0882_002:0344a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙堅牢故合為一體。",
        "from": "T18n0882_002:0344a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生極喜王大菩薩身。",
        "from": "T18n0882_002:0344a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住世尊大毘盧遮那如來心。",
        "from": "T18n0882_002:0344a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此頌曰。",
        "from": "T18n0882_002:0344a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大哉我此大善哉　　是即一切諸勝智　若有能斷分別者　　能生究竟大歡喜是時極喜王大菩薩身。",
        "from": "T18n0882_002:0344a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世尊心下。",
        "from": "T18n0882_002:0344a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來後月輪中。",
        "from": "T18n0882_002:0344a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理而住復請教示。",
        "from": "T18n0882_002:0344a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T18n0882_002:0344a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入一切如來等喜金剛三摩地。",
        "from": "T18n0882_002:0344a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來無上極喜智三昧。",
        "from": "T18n0882_002:0344a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於普盡無餘諸有情界。",
        "from": "T18n0882_002:0344a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等作一切利益歡喜。",
        "from": "T18n0882_002:0344a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令獲得適悅快樂。",
        "from": "T18n0882_002:0344a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得一切如來無上喜味勝悉地果。",
        "from": "T18n0882_002:0344a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以金剛喜像。",
        "from": "T18n0882_002:0344a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授與極喜王大菩薩雙手掌中。",
        "from": "T18n0882_002:0344a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來。",
        "from": "T18n0882_002:0344b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為立名號金剛喜。",
        "from": "T18n0882_002:0344b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛喜灌頂法而為灌頂。",
        "from": "T18n0882_002:0344b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛喜菩薩摩訶薩。",
        "from": "T18n0882_002:0344b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以所授金剛喜像。",
        "from": "T18n0882_002:0344b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向一切如來。",
        "from": "T18n0882_002:0344b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作金剛善哉歡喜之相。",
        "from": "T18n0882_002:0344b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此頌曰。",
        "from": "T18n0882_002:0344b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此是一切大覺尊　　能轉一切善哉相　善作一切喜金剛　　金剛妙喜令增長此是大菩提心。",
        "from": "T18n0882_002:0344b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來鉤召三昧。",
        "from": "T18n0882_002:0344b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來隨染智大歡喜。",
        "from": "T18n0882_002:0344b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來大三昧大士。",
        "from": "T18n0882_002:0344b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T18n0882_002:0344b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復入虛空藏大菩薩三昧。",
        "from": "T18n0882_002:0344b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生寶加持金剛三摩地。",
        "from": "T18n0882_002:0344b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名一切如來灌頂三昧。",
        "from": "T18n0882_002:0344b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切如來心。",
        "from": "T18n0882_002:0344b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心出說是大明曰。",
        "from": "T18n0882_002:0344b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)囉怛那(二合一句)纔出一切如來心時。",
        "from": "T18n0882_002:0344b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切虛空平等性。",
        "from": "T18n0882_002:0344b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智善通達故。",
        "from": "T18n0882_002:0344b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵三摩地妙堅牢故。",
        "from": "T18n0882_002:0344b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "T18n0882_002:0344b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼如是具德持金剛者。",
        "from": "T18n0882_002:0344b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成一切光明為出現已。",
        "from": "T18n0882_002:0344b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是彼光明周遍照耀一切世界。",
        "from": "T18n0882_002:0344b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成一切虛空界。",
        "from": "T18n0882_002:0344b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切如來。",
        "from": "T18n0882_002:0344b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所加持一切虛空界。",
        "from": "T18n0882_002:0344b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "混入世尊大毘盧遮那如來心。",
        "from": "T18n0882_002:0344b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙遍修故。",
        "from": "T18n0882_002:0344b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從金剛薩埵三摩地胎藏所成一切虛空界中。",
        "from": "T18n0882_002:0344b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出現大金剛寶像等。",
        "from": "T18n0882_002:0344b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世界周遍為量。",
        "from": "T18n0882_002:0344b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛掌中。",
        "from": "T18n0882_002:0344b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後從彼金剛寶像中。",
        "from": "T18n0882_002:0344b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出一切世界極微塵量等如來像。",
        "from": "T18n0882_002:0344b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作一切如來灌頂。",
        "from": "T18n0882_002:0344b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等以一切如來神通游戲。",
        "from": "T18n0882_002:0344b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切世界廣施作已。",
        "from": "T18n0882_002:0344b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切虛空界性出生。",
        "from": "T18n0882_002:0344b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金剛薩埵三摩地。",
        "from": "T18n0882_002:0344b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙堅牢故合為一體。",
        "from": "T18n0882_002:0344b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生虛空藏大菩薩身。",
        "from": "T18n0882_002:0344b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住世尊大毘盧遮那如來心。",
        "from": "T18n0882_002:0344b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此頌曰。",
        "from": "T18n0882_002:0344b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大哉我此妙灌頂　　金剛大寶勝無上　由彼諸佛無所著　　是故名為三界主是時虛空藏大菩薩身。",
        "from": "T18n0882_002:0344b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從世尊心下。",
        "from": "T18n0882_002:0344c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切如來前月輪中。",
        "from": "T18n0882_002:0344c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理而住復請教示。",
        "from": "T18n0882_002:0344c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T18n0882_002:0344c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入一切如來大摩尼寶金剛三摩地。",
        "from": "T18n0882_002:0344c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來圓滿意樂三昧。",
        "from": "T18n0882_002:0344c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於普盡無餘諸有情界。",
        "from": "T18n0882_002:0344c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令獲得一切義利。",
        "from": "T18n0882_002:0344c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及得一切適悅快樂。",
        "from": "T18n0882_002:0344c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得一切如來成就勝義。",
        "from": "T18n0882_002:0344c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上悉地。",
        "from": "T18n0882_002:0344c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以金剛摩尼寶及金剛寶輪金剛寶牙灌頂。",
        "from": "T18n0882_002:0344c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授與虛空藏大菩薩雙手掌中。",
        "from": "T18n0882_002:0344c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸如來。",
        "from": "T18n0882_002:0344c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為立名號金剛藏。",
        "from": "T18n0882_002:0344c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛藏灌頂法而為灌頂。",
        "from": "T18n0882_002:0344c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛藏大菩薩。",
        "from": "T18n0882_002:0344c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以彼金剛摩尼寶。",
        "from": "T18n0882_002:0344c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安自灌頂處說此頌曰。",
        "from": "T18n0882_002:0344c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此是一切大覺尊　　灌頂一切有情界　今得授於我掌中　　此即寶中安寶相爾時世尊復入大威光大菩薩三昧。",
        "from": "T18n0882_002:0344c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生寶加持金剛三摩地。",
        "from": "T18n0882_002:0344c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名一切如來光明三昧。",
        "from": "T18n0882_002:0344c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即一切如來心。",
        "from": "T18n0882_002:0344c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心出說是大明曰。",
        "from": "T18n0882_002:0344c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)帝(引)惹(一句)纔出一切如來心時。",
        "from": "T18n0882_002:0344c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼如是具德持金剛者。",
        "from": "T18n0882_002:0344c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成眾多日輪。",
        "from": "T18n0882_002:0344c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為出現已。",
        "from": "T18n0882_002:0344c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入世尊大毘盧遮那如來心。",
        "from": "T18n0882_002:0344c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一體。",
        "from": "T18n0882_002:0344c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是出現金剛日輪之相。",
        "from": "T18n0882_002:0344c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住佛掌中。",
        "from": "T18n0882_002:0344c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後從彼金剛日輪相中。",
        "from": "T18n0882_002:0344c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出一切世界極微塵量等如來像。",
        "from": "T18n0882_002:0344c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放一切如來大光明。",
        "from": "T18n0882_002:0344c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等以一切如來神通游戲。",
