[
    {
        "source_sentence": "佛頂尊勝陀羅尼經",
        "from": "T19n0968_001:0353a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐京兆杜行顗奉　詔譯",
        "from": "T19n0968_001:0353a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首一切智。",
        "from": "T19n0968_001:0353a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T19n0968_001:0353a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T19n0968_001:0353a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾八千人俱。",
        "from": "T19n0968_001:0353a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩三萬二千。",
        "from": "T19n0968_001:0353a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮得正智照明諸法。",
        "from": "T19n0968_001:0353a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於知所知了無罣礙。",
        "from": "T19n0968_001:0353a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰觀自在菩薩得大趣菩薩。",
        "from": "T19n0968_001:0353a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩文殊師利童真菩薩。",
        "from": "T19n0968_001:0353a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華勝藏菩薩手金剛菩薩。",
        "from": "T19n0968_001:0353a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持地菩薩虛空藏菩薩。",
        "from": "T19n0968_001:0353a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切障菩薩普賢菩薩而為上首。",
        "from": "T19n0968_001:0353a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等三萬二千菩薩摩訶薩眾。",
        "from": "T19n0968_001:0353a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有萬梵摩天。",
        "from": "T19n0968_001:0353a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善吒梵摩而為上首。",
        "from": "T19n0968_001:0353a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從餘生界來詣佛所俱在會集。",
        "from": "T19n0968_001:0353a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有萬二千諸釋天眾。",
        "from": "T19n0968_001:0353a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與無量天龍夜叉乾闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等俱來在會。",
        "from": "T19n0968_001:0353a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖尊四眾圍繞。",
        "from": "T19n0968_001:0353a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養而為說法。",
        "from": "T19n0968_001:0353a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時三十三天善法場中有天名善住。",
        "from": "T19n0968_001:0353a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處大寶宮盛縱歡樂。",
        "from": "T19n0968_001:0353a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妓麗侍奉嬉戲馳遊。",
        "from": "T19n0968_001:0353a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀覽娛情悉暢所欲。",
        "from": "T19n0968_001:0353a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽夜有聲呼天善住。",
        "from": "T19n0968_001:0353a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝終期至七日當死。",
        "from": "T19n0968_001:0353a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七生閻浮入於地獄。",
        "from": "T19n0968_001:0353a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後或為人貧窮生盲。",
        "from": "T19n0968_001:0353a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸苦惱。",
        "from": "T19n0968_001:0353a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住聞已恐怖驚惶毛竪憂愁。",
        "from": "T19n0968_001:0353a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急詣釋提桓因天帝之所。",
        "from": "T19n0968_001:0353a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前禮帝足荒懼白帝。",
        "from": "T19n0968_001:0353a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請帝垂哀。",
        "from": "T19n0968_001:0353a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救我苦厄救我苦厄。",
        "from": "T19n0968_001:0353a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我受天樂縱心適意。",
        "from": "T19n0968_001:0353a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有聲言七日命終。",
        "from": "T19n0968_001:0353a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七生閻浮當入地獄。",
        "from": "T19n0968_001:0353a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後或為人貧窮生盲受諸苦惱。",
        "from": "T19n0968_001:0353a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今煩荒心迷識亂計不知出。",
        "from": "T19n0968_001:0353a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟帝悲愍拔救苦毒。",
        "from": "T19n0968_001:0353a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因聞是語已。",
        "from": "T19n0968_001:0353b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深懷怪悼云何七生。",
        "from": "T19n0968_001:0353b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默寂須臾遂見善住。",
        "from": "T19n0968_001:0353b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此命終便愛猪身。",
        "from": "T19n0968_001:0353b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猪身畢已受於狗身。",
        "from": "T19n0968_001:0353b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狗身畢已受於狐身。",
        "from": "T19n0968_001:0353b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狐身畢已受於猴身。",
        "from": "T19n0968_001:0353b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猴身畢已受毒蛇身。",
        "from": "T19n0968_001:0353b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇身畢已當受鷲身。",
        "from": "T19n0968_001:0353b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鷲身畢已受於烏身。",
        "from": "T19n0968_001:0353b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七生恒食穢惡。",
        "from": "T19n0968_001:0353b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因見是事已。",
        "from": "T19n0968_001:0353b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深哀善住當受大苦。",
        "from": "T19n0968_001:0353b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何計何從誰能救濟。",
        "from": "T19n0968_001:0353b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是思惟唯除如來阿羅訶三藐三佛陀無能救者。",
        "from": "T19n0968_001:0353b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是天帝其夜後分。",
        "from": "T19n0968_001:0353b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齎諸華鬘種種諸香末香燒香。",
        "from": "T19n0968_001:0353b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天衣瓔珞諸莊嚴具。",
        "from": "T19n0968_001:0353b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣於祇林佛聖尊所。",
        "from": "T19n0968_001:0353b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足右繞七匝大供養已。",
        "from": "T19n0968_001:0353b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於佛前一面而坐。",
        "from": "T19n0968_001:0353b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善住事具白聖尊。",
        "from": "T19n0968_001:0353b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時如來頂放大光。",
        "from": "T19n0968_001:0353b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光雜色流照十方一切生界。",
        "from": "T19n0968_001:0353b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還至佛所右繞三匝從佛口入。",
        "from": "T19n0968_001:0353b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛遂微笑告釋提桓因。",
        "from": "T19n0968_001:0353b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛灌頂清淨諸趣佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0353b15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨除一切業障地獄畜生。",
        "from": "T19n0968_001:0353b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻摩盧迦生死苦惱。",
        "from": "T19n0968_001:0353b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破地獄道升於佛路。",
        "from": "T19n0968_001:0353b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此清淨諸趣佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0353b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但聽聞者生死相續一切業障。",
        "from": "T19n0968_001:0353b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種苦患咸悉消滅。",
        "from": "T19n0968_001:0353b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲善果得宿命智。",
        "from": "T19n0968_001:0353b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛國生一佛國。",
        "from": "T19n0968_001:0353b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一天中生一天中。",
        "from": "T19n0968_001:0353b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至三十三天宮常知宿命。",
        "from": "T19n0968_001:0353b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能習持者。",
        "from": "T19n0968_001:0353b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現百年限更增其壽。",
        "from": "T19n0968_001:0353b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意淨心寧適樂。",
        "from": "T19n0968_001:0353b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身苦咸除獲諸善觸。",
        "from": "T19n0968_001:0353b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛觀視諸天衛護。",
        "from": "T19n0968_001:0353b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩慈愛繫念。",
        "from": "T19n0968_001:0353b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦之者一切地獄畜生。",
        "from": "T19n0968_001:0353b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻摩盧迦及諸餓鬼。",
        "from": "T19n0968_001:0353b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除消散境域空虛。",
        "from": "T19n0968_001:0353b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛剎菩薩天宮。",
        "from": "T19n0968_001:0353b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸闢福門導之令入。",
        "from": "T19n0968_001:0353b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是釋提桓因前白佛言聖尊。",
        "from": "T19n0968_001:0353b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐愍攝護一切眾生。",
        "from": "T19n0968_001:0353b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願為說清淨諸趣佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0353b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖尊受天帝請。",
        "from": "T19n0968_001:0353b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T19n0968_001:0353b29_18",
        "context_with_next_sentence": true
    },
    {
