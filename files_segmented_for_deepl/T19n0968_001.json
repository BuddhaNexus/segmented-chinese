        "from": "T19n0968_001:0353c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨諸罪障除諸惡趣。",
        "from": "T19n0968_001:0354a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十八俱胝百千恒河沙諸佛。",
        "from": "T19n0968_001:0354a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所共宣說守護喜讚。",
        "from": "T19n0968_001:0354a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來智印印之。",
        "from": "T19n0968_001:0354a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為除一切眾惡趣故。",
        "from": "T19n0968_001:0354a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切地獄畜生閻摩盧迦。",
        "from": "T19n0968_001:0354a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸罪惡類沈溺苦海。",
        "from": "T19n0968_001:0354a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸痛毒為解脫故。",
        "from": "T19n0968_001:0354a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸短壽薄福下陋。",
        "from": "T19n0968_001:0354a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卑賤惡業諸眾生故。",
        "from": "T19n0968_001:0354a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣於地獄種種生類夭折失心。",
        "from": "T19n0968_001:0354a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡背正路諸眾生故。",
        "from": "T19n0968_001:0354a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼行閻浮提。",
        "from": "T19n0968_001:0354a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨除罪業令歸解脫。",
        "from": "T19n0968_001:0354a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝汝當持此尊勝陀羅尼為善住說。",
        "from": "T19n0968_001:0354a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為閻浮眾生諸天天子一切含識。",
        "from": "T19n0968_001:0354a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣揚讀誦思惟習念。",
        "from": "T19n0968_001:0354a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬供養受持修行。",
        "from": "T19n0968_001:0354a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今以陀羅尼印教約。",
        "from": "T19n0968_001:0354a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑天帝汝當善持聞此陀羅尼者。",
        "from": "T19n0968_001:0354a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千劫中。",
        "from": "T19n0968_001:0354a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所積業障咸得清淨。",
        "from": "T19n0968_001:0354a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮地獄不生畜生。",
        "from": "T19n0968_001:0354a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻摩盧迦餓鬼惡趣。",
        "from": "T19n0968_001:0354a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不受阿修羅夜叉羅剎。",
        "from": "T19n0968_001:0354a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及富丹那迦吒富丹那癲等鬼神之身。",
        "from": "T19n0968_001:0354a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至犬龜鳥獸蚊虻毒蛇腹行之類。",
        "from": "T19n0968_001:0354a20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸小蟲不復更受。",
        "from": "T19n0968_001:0354a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒與佛俱或生菩薩勝族。",
        "from": "T19n0968_001:0354a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生婆羅門大姓剎利大姓居士大家。",
        "from": "T19n0968_001:0354a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼力得清淨生。",
        "from": "T19n0968_001:0354a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至坐菩提獲正遍覺。",
        "from": "T19n0968_001:0354a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝此清淨諸趣尊勝陀羅尼。",
        "from": "T19n0968_001:0354a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威神廣大具大功果。",
        "from": "T19n0968_001:0354a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大力能是大吉祥。",
        "from": "T19n0968_001:0354a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日藏寶珠皎潔無垢淨若虛空。",
        "from": "T19n0968_001:0354a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在之處光明照朗。",
        "from": "T19n0968_001:0354a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼所置之處。",
        "from": "T19n0968_001:0354a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威神洽被亦復如是。",
        "from": "T19n0968_001:0354a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持此陀羅尼者。",
        "from": "T19n0968_001:0354a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪惡皆不能染。",
        "from": "T19n0968_001:0354a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柔和潤澤清淨無垢如閻浮檀金。",
        "from": "T19n0968_001:0354a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫讀習誦念供養。",
        "from": "T19n0968_001:0354a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持修行此陀羅尼者。",
        "from": "T19n0968_001:0354a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此處地獄業除諸趣咸淨。",
        "from": "T19n0968_001:0354b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此陀羅尼安置幢上。",
        "from": "T19n0968_001:0354b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹於高山或高屋上。",
        "from": "T19n0968_001:0354b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘高處或浮圖中。",
        "from": "T19n0968_001:0354b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若比丘比丘尼優婆塞優婆夷善男子善女人等。",
        "from": "T19n0968_001:0354b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見此陀羅尼幢。",
        "from": "T19n0968_001:0354b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若近幢若幢影霑身若幢風吹身。",
        "from": "T19n0968_001:0354b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為幢風飄塵著身。",
        "from": "T19n0968_001:0354b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪業便消。",
        "from": "T19n0968_001:0354b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生地獄畜生閻摩盧迦餓鬼阿修羅中。",
        "from": "T19n0968_001:0354b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮諸惡趣一切如來諸佛當與授記。",
        "from": "T19n0968_001:0354b07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得不退轉至登正覺。",
        "from": "T19n0968_001:0354b08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種華香。",
        "from": "T19n0968_001:0354b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種諸鬘種種幢繖。",
        "from": "T19n0968_001:0354b09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幡蓋瓔珞諸莊嚴具。",
        "from": "T19n0968_001:0354b09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸塗飾修大供養。",
        "from": "T19n0968_001:0354b10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四衢道造塔。",
        "from": "T19n0968_001:0354b10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置此陀羅尼行道頂禮。",
        "from": "T19n0968_001:0354b10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此輩是摩訶薩。",
        "from": "T19n0968_001:0354b11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛之法子法之梁柱舍利之塔。",
        "from": "T19n0968_001:0354b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時閻摩法王。",
        "from": "T19n0968_001:0354b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夜將曉來詣佛所。",
        "from": "T19n0968_001:0354b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種天華種種諸香。",
        "from": "T19n0968_001:0354b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雜香燒香天衣瓔珞。",
        "from": "T19n0968_001:0354b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修大供養右繞七匝。",
        "from": "T19n0968_001:0354b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮佛足白佛言聖尊。",
        "from": "T19n0968_001:0354b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我知佛恩非不知恩。",
        "from": "T19n0968_001:0354b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為報佛恩故擁護一切。",
        "from": "T19n0968_001:0354b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常勤奉事此大威力大功果陀羅尼。",
        "from": "T19n0968_001:0354b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉地獄門淨諸惡趣。",
        "from": "T19n0968_001:0354b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王繞佛三匝前白佛言。",
        "from": "T19n0968_001:0354b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願聖尊說此陀羅尼修行之法。",
        "from": "T19n0968_001:0354b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告四天王諦聽諦聽我今當說。",
        "from": "T19n0968_001:0354b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有命短求長壽者。",
        "from": "T19n0968_001:0354b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於白月十五日澡浴清淨。",
        "from": "T19n0968_001:0354b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著淨潔衣受八戒齋。",
        "from": "T19n0968_001:0354b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼千遍。",
        "from": "T19n0968_001:0354b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸障便除病愈壽增獲大安樂。",
        "from": "T19n0968_001:0354b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄畜生諸惡趣苦咸悉解脫。",
        "from": "T19n0968_001:0354b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至畜生諸惡趣類。",
        "from": "T19n0968_001:0354b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳得聞此陀羅尼者。",
        "from": "T19n0968_001:0354b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便復不受惡趣之身。",
        "from": "T19n0968_001:0354b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嬰纏重病者病皆消散諸趣清淨。",
        "from": "T19n0968_001:0354b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生現樂界。",
        "from": "T19n0968_001:0354b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生不受胎藏常知宿命。",
        "from": "T19n0968_001:0354b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸眾生罪業所牽。",
        "from": "T19n0968_001:0354b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生於惡趣。",
        "from": "T19n0968_001:0354b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以此陀羅尼呪土二十一遍。",
        "from": "T19n0968_001:0354b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散其骸骨之上隨其所生若地獄若畜生。",
        "from": "T19n0968_001:0354b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或閻摩盧迦或餓鬼趣。",
        "from": "T19n0968_001:0354c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至阿鼻地獄禽獸蜫蟲。",
        "from": "T19n0968_001:0354c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸謝苦身生天受樂。",
        "from": "T19n0968_001:0354c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日誦此陀羅尼二十一遍。",
        "from": "T19n0968_001:0354c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪滅福增眾人愛敬。",
        "from": "T19n0968_001:0354c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生極樂國。",
        "from": "T19n0968_001:0354c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常念持此陀羅尼。",
        "from": "T19n0968_001:0354c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生諸淨土。",
        "from": "T19n0968_001:0354c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從一佛國至一佛國。",
        "from": "T19n0968_001:0354c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切佛剎作大光照。",
        "from": "T19n0968_001:0354c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與佛俱諸佛護育而與授記。",
        "from": "T19n0968_001:0354c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至獲證大涅槃樂。",
        "from": "T19n0968_001:0354c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行此陀羅尼者。",
        "from": "T19n0968_001:0354c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作方壇四面正等。",
        "from": "T19n0968_001:0354c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散種種淨華燒種種香。",
        "from": "T19n0968_001:0354c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝輪著地長跪一心。",
        "from": "T19n0968_001:0354c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普念十方一切諸佛。",
        "from": "T19n0968_001:0354c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作合十指爪印當於心上。",
        "from": "T19n0968_001:0354c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指二大拇指各相屈按。",
        "from": "T19n0968_001:0354c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱娑度(云善哉)誦此陀羅尼一百八遍。",
        "from": "T19n0968_001:0354c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為供養承事八十八俱胝恒河沙那由他百千諸佛。",
        "from": "T19n0968_001:0354c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛供養而作供養。",
        "from": "T19n0968_001:0354c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為供養四大天王。",
        "from": "T19n0968_001:0354c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切讚善稱是佛子。",
        "from": "T19n0968_001:0354c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大菩提莊嚴其心獲無礙智。",
        "from": "T19n0968_001:0354c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡欲誦念此陀羅尼者。",
        "from": "T19n0968_001:0354c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當至心如法作合十指爪印。",
        "from": "T19n0968_001:0354c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為修行陀羅尼法。",
        "from": "T19n0968_001:0354c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告釋提桓因。",
        "from": "T19n0968_001:0354c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝當以此法救除眾生。",
        "from": "T19n0968_001:0354c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄諸趣一切苦惱。",
        "from": "T19n0968_001:0354c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨諸趣業獲長壽果。",
        "from": "T19n0968_001:0354c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天帝當還可授善住天子此陀羅尼。",
        "from": "T19n0968_001:0354c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿七日已汝共善住來至我所。",
        "from": "T19n0968_001:0354c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因受佛教已還於天宮。",
        "from": "T19n0968_001:0354c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此佛頂尊勝陀羅尼。",
        "from": "T19n0968_001:0354c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授善住天子。",
        "from": "T19n0968_001:0354c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住受已修行供養六日六夜。",
        "from": "T19n0968_001:0354c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰至七日諸惡趣業皆得解脫。",
        "from": "T19n0968_001:0354c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居天福處獲大長壽。",
        "from": "T19n0968_001:0354c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踊躍大聲唱言。",
        "from": "T19n0968_001:0354c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿呼佛陀耶阿呼達摩耶阿呼僧伽耶阿呼毘耶陀(云陀羅尼)救拔眾生一切苦厄。",
        "from": "T19n0968_001:0354c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我得脫諸惡趣苦。",
        "from": "T19n0968_001:0354c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天帝釋提桓因部屬侍繞。",
        "from": "T19n0968_001:0354c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將善住天子齎種種華香。",
        "from": "T19n0968_001:0354c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香塗香并種種鬘。",
        "from": "T19n0968_001:0354c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋繖幡幢衣服瓔珞。",
        "from": "T19n0968_001:0354c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘天寶輅備天莊嚴。",
        "from": "T19n0968_001:0355a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來至佛所作大供養右繞萬匝便。",
        "from": "T19n0968_001:0355a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛前一面而立。",
        "from": "T19n0968_001:0355a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌讚佛已退坐聽法。",
        "from": "T19n0968_001:0355a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛申金色右手。",
        "from": "T19n0968_001:0355a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慰護善住而與授記。",
        "from": "T19n0968_001:0355a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛頂尊勝陀羅尼經",
        "from": "T19n0968_001:0355a05_0",
        "context_with_next_sentence": false
    }
]