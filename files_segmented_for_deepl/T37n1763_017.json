[
    {
        "source_sentence": "大般涅槃經集解卷第十七(分邪正品第九)　辯十一種邪正事分邪正品第九案。",
        "from": "T37n1763_017:0444b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_017:0444b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答云何知天魔。",
        "from": "T37n1763_017:0444b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾作留難也。",
        "from": "T37n1763_017:0444b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故是廣流通也。",
        "from": "T37n1763_017:0444b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_017:0444b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫邪黨嫉正。",
        "from": "T37n1763_017:0444b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔亂真道。",
        "from": "T37n1763_017:0444b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能惑始學人。",
        "from": "T37n1763_017:0444b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故宜辨其相。",
        "from": "T37n1763_017:0444b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以四依品中。",
        "from": "T37n1763_017:0444b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉賊狗毒龍等譬。",
        "from": "T37n1763_017:0444b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答問云何作留難也。",
        "from": "T37n1763_017:0444b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此一品。",
        "from": "T37n1763_017:0444b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并四諦品。",
        "from": "T37n1763_017:0444b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答如來波旬說。",
        "from": "T37n1763_017:0444b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何分別知也。",
        "from": "T37n1763_017:0444b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同是四十九年教。",
        "from": "T37n1763_017:0444c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而善察者。",
        "from": "T37n1763_017:0444c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居然異也。",
        "from": "T37n1763_017:0444c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0444c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問稱天魔者。",
        "from": "T37n1763_017:0444c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是舉天。",
        "from": "T37n1763_017:0444c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示極魔之勝耳。",
        "from": "T37n1763_017:0444c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋魔之為亂。",
        "from": "T37n1763_017:0444c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事不止一。",
        "from": "T37n1763_017:0444c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以言之。",
        "from": "T37n1763_017:0444c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為實亂為甚。",
        "from": "T37n1763_017:0444c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故問云。",
        "from": "T37n1763_017:0444c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來波旬說。",
        "from": "T37n1763_017:0444c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何分別知也。",
        "from": "T37n1763_017:0444c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此雖人法兩異。",
        "from": "T37n1763_017:0444c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同能亂道。",
        "from": "T37n1763_017:0444c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故合成一問也。",
        "from": "T37n1763_017:0444c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧誕曰。",
        "from": "T37n1763_017:0444c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品有四段。",
        "from": "T37n1763_017:0444c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從品初至九部經。",
        "from": "T37n1763_017:0444c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明魔佛二說。",
        "from": "T37n1763_017:0444c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相似而異也。",
        "from": "T37n1763_017:0444c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二從九部以下。",
        "from": "T37n1763_017:0444c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛弟子執輕非重。",
        "from": "T37n1763_017:0444c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執小非大。",
        "from": "T37n1763_017:0444c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迭相誹謗。",
        "from": "T37n1763_017:0444c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復是魔也。",
        "from": "T37n1763_017:0444c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三從無四波羅夷以下。",
        "from": "T37n1763_017:0444c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明大邪見人所說。",
        "from": "T37n1763_017:0444c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無善惡理。",
        "from": "T37n1763_017:0444c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復是魔也。",
        "from": "T37n1763_017:0444c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四從要因持戒以下。",
        "from": "T37n1763_017:0444c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通明古今所可乖佛法事。",
        "from": "T37n1763_017:0444c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡是魔說也。",
        "from": "T37n1763_017:0444c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今佛之與魔。",
        "from": "T37n1763_017:0444c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在家出家。",
        "from": "T37n1763_017:0444c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪見正見。",
        "from": "T37n1763_017:0444c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經律通塞。",
        "from": "T37n1763_017:0444c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡釋也。",
        "from": "T37n1763_017:0444c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時迦葉白佛言世尊(至)諸餘經律能受持者。",
        "from": "T37n1763_017:0444c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0444c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_017:0444c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持魔經律。",
        "from": "T37n1763_017:0444c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是謂依人不依法也。",
        "from": "T37n1763_017:0444c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若具四顛倒。",
        "from": "T37n1763_017:0444c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即四魔也。",
        "from": "T37n1763_017:0444c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0444c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四魔者。",
        "from": "T37n1763_017:0444c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔經魔律魔師及魔弟子也。",
        "from": "T37n1763_017:0444c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔以二事亂法。",
        "from": "T37n1763_017:0444c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一以形亂。",
        "from": "T37n1763_017:0444c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二以說亂。",
        "from": "T37n1763_017:0444c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今先明形亂。",
        "from": "T37n1763_017:0444c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明說亂。",
        "from": "T37n1763_017:0444c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就說亂中。",
        "from": "T37n1763_017:0444c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略有二。",
        "from": "T37n1763_017:0444c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者亂經。",
        "from": "T37n1763_017:0444c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者亂律。",
        "from": "T37n1763_017:0444c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亂經亂律。",
        "from": "T37n1763_017:0444c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有兩重。",
        "from": "T37n1763_017:0444c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初略後廣也。",
        "from": "T37n1763_017:0444c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就略亂經中。",
        "from": "T37n1763_017:0444c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承佛偏教。",
        "from": "T37n1763_017:0444c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執為了義。",
        "from": "T37n1763_017:0444c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就略律中。",
        "from": "T37n1763_017:0444c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明一往違反律教。",
        "from": "T37n1763_017:0444c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就廣亂經中。",
        "from": "T37n1763_017:0444c21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文句再出。",
        "from": "T37n1763_017:0444c21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不必從教。",
        "from": "T37n1763_017:0444c21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正自推度。",
        "from": "T37n1763_017:0444c21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生此邪解。",
        "from": "T37n1763_017:0444c22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非功德之人。",
        "from": "T37n1763_017:0444c22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後明比丘答王有性得罪。",
        "from": "T37n1763_017:0444c22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名亂經也。",
        "from": "T37n1763_017:0444c23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就廣亂律中。",
        "from": "T37n1763_017:0444c23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可分為七。",
        "from": "T37n1763_017:0444c23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至彼更分也。",
        "from": "T37n1763_017:0444c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_017:0444c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中辨邪。",
        "from": "T37n1763_017:0444c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二段。",
        "from": "T37n1763_017:0444c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者天魔亂道。",
        "from": "T37n1763_017:0444c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者人作魔。",
        "from": "T37n1763_017:0444c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以亂正也。",
        "from": "T37n1763_017:0444c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言世尊(至)如是等輩復云何知。",
        "from": "T37n1763_017:0444c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0444c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0444c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向一翻。",
        "from": "T37n1763_017:0444c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先指前四依。",
        "from": "T37n1763_017:0444c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諮佛。",
        "from": "T37n1763_017:0444c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既蒙印可。",
        "from": "T37n1763_017:0444c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便舉先問。",
        "from": "T37n1763_017:0444c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以請答也。",
        "from": "T37n1763_017:0444c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告迦葉我涅槃七百歲後(至)作無漏身壞我正法。",
        "from": "T37n1763_017:0444c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二種亂中。",
        "from": "T37n1763_017:0445a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此形亂也。",
        "from": "T37n1763_017:0445a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是魔波旬壞正法時(至)隨順佛所說者即是菩薩。",
        "from": "T37n1763_017:0445a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下顯言亂也。",
        "from": "T37n1763_017:0445a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十一復次。",
        "from": "T37n1763_017:0445a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第一謂實生王宮也。",
        "from": "T37n1763_017:0445a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有說言如來生時(至)隨順佛所說者即是菩薩。",
        "from": "T37n1763_017:0445a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二不信四方各行七步。",
        "from": "T37n1763_017:0445a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有說言菩薩生已(至)隨順佛所說者即是菩薩。",
        "from": "T37n1763_017:0445a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三謂佛在後生。",
        "from": "T37n1763_017:0445a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應敬禮天。",
        "from": "T37n1763_017:0445a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天前出故。",
        "from": "T37n1763_017:0445a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應禮佛也。",
        "from": "T37n1763_017:0445a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有經律說言菩薩(至)隨順佛經律者是名菩薩。",
        "from": "T37n1763_017:0445a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四謂實受五欲也。",
        "from": "T37n1763_017:0445a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有說言佛在舍衛(至)隨順佛所說者即是菩薩。",
        "from": "T37n1763_017:0445a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五謂佛聽受八不淨物也。",
        "from": "T37n1763_017:0445a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有說言菩薩為欲供養(至)當知是魔之所說也。",
        "from": "T37n1763_017:0445a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六謂佛不能現入諸道。",
        "from": "T37n1763_017:0445a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示眾伎能也。",
        "from": "T37n1763_017:0445a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有說言菩薩如是(至)隨順佛所說者即是菩薩。",
        "from": "T37n1763_017:0445a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七謂戒律一向皆重。",
        "from": "T37n1763_017:0445a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言無有大乘也。",
        "from": "T37n1763_017:0445a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子若有說言(至)隨順佛所說者即是菩薩。",
        "from": "T37n1763_017:0445a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0445a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從輕重之罪。",
        "from": "T37n1763_017:0445a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其性皆重。",
        "from": "T37n1763_017:0445a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自此以下。",
        "from": "T37n1763_017:0445a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔說律以亂正也。",
        "from": "T37n1763_017:0445a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有七意。",
        "from": "T37n1763_017:0445a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第一。",
        "from": "T37n1763_017:0445a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且一往云。",
        "from": "T37n1763_017:0445a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言違反律教也。",
        "from": "T37n1763_017:0445a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八謂佛不為功德所成。",
        "from": "T37n1763_017:0445a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故身無常也。",
        "from": "T37n1763_017:0445a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有人言或有比丘(至)若能隨順是大菩薩。",
        "from": "T37n1763_017:0445a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0445a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三說二人無犯。",
        "from": "T37n1763_017:0445a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而犯為犯也。",
        "from": "T37n1763_017:0445a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九謂實不犯。",
        "from": "T37n1763_017:0445a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而言犯也。",
        "from": "T37n1763_017:0445a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有說言無四波羅夷(至)當知是人真我弟子。",
        "from": "T37n1763_017:0445a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0445a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三說一向毀犯。",
        "from": "T37n1763_017:0445a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都無有罪。",
        "from": "T37n1763_017:0445a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十謂無一切戒也。",
        "from": "T37n1763_017:0445b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下因迦葉更問。",
        "from": "T37n1763_017:0445b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別明異義也。",
        "from": "T37n1763_017:0445b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言世尊(至)佛法甚深不可思議。",
        "from": "T37n1763_017:0445b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0445b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四明九部經中。",
        "from": "T37n1763_017:0445b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不說佛性。",
        "from": "T37n1763_017:0445b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教說無。",
        "from": "T37n1763_017:0445b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此不犯罪。",
        "from": "T37n1763_017:0445b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說得罪。",
        "from": "T37n1763_017:0445b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是魔說。",
        "from": "T37n1763_017:0445b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為亂律也。",
        "from": "T37n1763_017:0445b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言世尊(至)不名墮過人法名為菩薩。",
        "from": "T37n1763_017:0445b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0445b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五明必能護法。",
        "from": "T37n1763_017:0445b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣通正化。",
        "from": "T37n1763_017:0445b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖唱得道。",
        "from": "T37n1763_017:0445b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不名得罪。",
        "from": "T37n1763_017:0445b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說罪者。",
        "from": "T37n1763_017:0445b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是魔說。",
        "from": "T37n1763_017:0445b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為亂律也。",
        "from": "T37n1763_017:0445b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若言有犯突吉羅者(至)隨順佛所說者是名菩薩。",
        "from": "T37n1763_017:0445b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0445b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六明犯罪果報。",
        "from": "T37n1763_017:0445b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又長兼出大乘偷蘭之事。",
        "from": "T37n1763_017:0445b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誡後人。",
        "from": "T37n1763_017:0445b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有說言常翹一脚(至)當知是人是大菩薩。",
        "from": "T37n1763_017:0445b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_017:0445b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七用若九十五種道。",
        "from": "T37n1763_017:0445b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆聽出家。",
        "from": "T37n1763_017:0445b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為亂律也。",
        "from": "T37n1763_017:0445b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第十一。",
        "from": "T37n1763_017:0445b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂佛聽畜不如法物。",
        "from": "T37n1763_017:0445b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及聽出家。",
        "from": "T37n1763_017:0445b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為魔說也。",
        "from": "T37n1763_017:0445b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子魔說佛說差別之相今已為汝廣宣分別。",
        "from": "T37n1763_017:0445b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結上旨也。",
        "from": "T37n1763_017:0445b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉白佛言世尊我今始知(至)因是得入佛法深義。",
        "from": "T37n1763_017:0445b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚嘆。",
        "from": "T37n1763_017:0445b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛讚迦葉善哉善哉(至)曉了分別是名黠慧。",
        "from": "T37n1763_017:0445b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_017:0445b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_017:0445b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述成也。",
        "from": "T37n1763_017:0445b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第十七",
        "from": "T37n1763_017:0445b24_0",
        "context_with_next_sentence": false
    }
]