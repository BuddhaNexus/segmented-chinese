[
    {
        "source_sentence": "佛說安宅神呪經",
        "from": "T21n1394_001:0911a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後漢失譯人名",
        "from": "T21n1394_001:0911a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1394_001:0911a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛住舍衛國祇樹給孤獨園。",
        "from": "T21n1394_001:0911a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與千二百五十比丘。",
        "from": "T21n1394_001:0911a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆阿羅漢諸漏已盡。",
        "from": "T21n1394_001:0911a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心澄靜六通無礙。",
        "from": "T21n1394_001:0911a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰大智舍利弗摩訶目揵連。",
        "from": "T21n1394_001:0911a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶迦葉摩訶迦旃延須菩提等。",
        "from": "T21n1394_001:0911a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有菩薩摩訶薩八千人俱。",
        "from": "T21n1394_001:0911a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利菩薩導師菩薩。",
        "from": "T21n1394_001:0911a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空藏菩薩觀世音菩薩救脫菩薩。",
        "from": "T21n1394_001:0911a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等菩薩摩訶薩威德自在。",
        "from": "T21n1394_001:0911a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有比丘比丘尼優婆塞優婆夷。",
        "from": "T21n1394_001:0911a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍夜叉八部鬼神共相圍繞說微妙法。",
        "from": "T21n1394_001:0911a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有離車長者子五十人俱。",
        "from": "T21n1394_001:0911a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身坌塵土懷憂愁慼。",
        "from": "T21n1394_001:0911a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如有人生失父母所愛妻子。",
        "from": "T21n1394_001:0911a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來至佛所頭面作禮却住一面。",
        "from": "T21n1394_001:0911b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊知而故問。",
        "from": "T21n1394_001:0911b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸長者子以何因緣而有惱色。",
        "from": "T21n1394_001:0911b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂愁不樂失於常容。",
        "from": "T21n1394_001:0911b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸長者子同聲俱白佛言。",
        "from": "T21n1394_001:0911b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊未審人居世間。",
        "from": "T21n1394_001:0911b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗有家宅吉凶以不。",
        "from": "T21n1394_001:0911b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即答言如是。",
        "from": "T21n1394_001:0911b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸事皆由眾生心行。",
        "from": "T21n1394_001:0911b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢想所造不得都無。",
        "from": "T21n1394_001:0911b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸離車等白佛言。",
        "from": "T21n1394_001:0911b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊弟子等蒙宿緣一毫之福。",
        "from": "T21n1394_001:0911b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得覩如來慈化無遺。",
        "from": "T21n1394_001:0911b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開甘露門潤以法雨。",
        "from": "T21n1394_001:0911b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有何罪生此五濁極惡之世。",
        "from": "T21n1394_001:0911b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懷憂抱苦怖懼萬端不捨須臾。",
        "from": "T21n1394_001:0911b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以言者自惟弟子德淺福薄。",
        "from": "T21n1394_001:0911b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所居舍宅災怪頻疊。",
        "from": "T21n1394_001:0911b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡魔日夜競共侵陵。",
        "from": "T21n1394_001:0911b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐臥不安如懷湯火。",
        "from": "T21n1394_001:0911b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自頃已來失去善心無所恃怙。",
        "from": "T21n1394_001:0911b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊受弟子請臨降所居賜為安宅。",
        "from": "T21n1394_001:0911b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅諸守宅諸神及四時禁忌。",
        "from": "T21n1394_001:0911b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常來榮衛使日夜安吉災禍消滅。",
        "from": "T21n1394_001:0911b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉善哉。",
        "from": "T21n1394_001:0911b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如汝說吾自知時。",
        "from": "T21n1394_001:0911b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊明旦勅諸弟子。",
        "from": "T21n1394_001:0911b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可各整衣服當入聚落。",
        "from": "T21n1394_001:0911b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各持應器往至長者子舍。",
        "from": "T21n1394_001:0911b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飯食既畢敷轉輪座。",
        "from": "T21n1394_001:0911b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸長者說微妙法。",
        "from": "T21n1394_001:0911b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令離怖畏身心悅樂。",
        "from": "T21n1394_001:0911b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸離車各生歡喜。",
        "from": "T21n1394_001:0911b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如比丘入第三禪。",
        "from": "T21n1394_001:0911b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即呼守宅諸神。",
        "from": "T21n1394_001:0911b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來到佛所而告之言。",
        "from": "T21n1394_001:0911b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今已後是諸神鬼。",
        "from": "T21n1394_001:0911b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得妄作恐動。",
        "from": "T21n1394_001:0911b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令某等不安恒懷憂怖。",
        "from": "T21n1394_001:0911b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當使大力鬼神。",
        "from": "T21n1394_001:0911b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碎滅汝身令如微塵。",
        "from": "T21n1394_001:0911b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復告大眾。",
        "from": "T21n1394_001:0911b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善男子善女人等。",
        "from": "T21n1394_001:0911b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾涅槃後五百歲中。",
        "from": "T21n1394_001:0911b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生垢重邪見轉熾　魔道競興妖魅妄作。",
        "from": "T21n1394_001:0911b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[門@視]人門戶各伺人便。",
        "from": "T21n1394_001:0911b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覓人長短為作不祥種種留難。",
        "from": "T21n1394_001:0911b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當爾之時是諸弟子。",
        "from": "T21n1394_001:0911b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當一心念佛念法念比丘僧。",
        "from": "T21n1394_001:0911b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋戒清淨奉持三歸五戒十善八關齋戒。",
        "from": "T21n1394_001:0911b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日夕六時禮拜懺悔勤心精進。",
        "from": "T21n1394_001:0911c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請清淨僧設安宅齋。",
        "from": "T21n1394_001:0911c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒眾名香然燈續明。",
        "from": "T21n1394_001:0911c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露出中庭讀是經典。",
        "from": "T21n1394_001:0911c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "某等安居立宅已來。",
        "from": "T21n1394_001:0911c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立南庌北堂東西之廂。",
        "from": "T21n1394_001:0911c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碓磨倉庫井竈門牆。",
        "from": "T21n1394_001:0911c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "園林池沼六畜之欄。",
        "from": "T21n1394_001:0911c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復移房動土穿鑿非時。",
        "from": "T21n1394_001:0911c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或犯觸伏龍騰蛇青龍白虎朱雀玄武。",
        "from": "T21n1394_001:0911c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六甲禁忌十二時神門庭戶陌井竈精露。",
        "from": "T21n1394_001:0911c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堂上戶中溷邊之神。",
        "from": "T21n1394_001:0911c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今持諸佛神力菩薩威光般若波羅蜜力。",
        "from": "T21n1394_001:0911c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅宅前宅後宅左宅右宅中守神神子神母。",
        "from": "T21n1394_001:0911c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏龍騰蛇六甲禁忌。",
        "from": "T21n1394_001:0911c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二時神飛屍邪忤魍魎鬼神。",
        "from": "T21n1394_001:0911c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因託形聲寄名附著。",
        "from": "T21n1394_001:0911c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今已後不得妄嬈我弟子等。",
        "from": "T21n1394_001:0911c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神子神母宅中諸神邪魅蠱道魍魎弊魔各安所在不得妄相侵陵為作衰惱。",
        "from": "T21n1394_001:0911c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令某甲等驚動怖畏。",
        "from": "T21n1394_001:0911c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如我教。",
        "from": "T21n1394_001:0911c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不順我語令汝等頭。",
        "from": "T21n1394_001:0911c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破作七分如多羅樹枝。",
        "from": "T21n1394_001:0911c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊而說呪曰。",
        "from": "T21n1394_001:0911c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　南無佛陀四野　　南無達摩四野",
        "from": "T21n1394_001:0911c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　南無僧伽四野",
        "from": "T21n1394_001:0911c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為弟子某甲承佛威力而說神呪。",
        "from": "T21n1394_001:0911c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一足眾生莫惱我　　二足眾生莫惱我　三足眾生莫惱我　　四足眾生莫惱我我有一切大慈大悲愍念一切眾生。",
        "from": "T21n1394_001:0911c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等惡魔各還所屬。",
        "from": "T21n1394_001:0911c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得橫忓擾亂我弟子等。",
        "from": "T21n1394_001:0911c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說呪曰。",
        "from": "T21n1394_001:0911c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白黑龍王　善子龍王　漚鉢羅龍王　阿耨大龍王結界呪文伽婆致　伽婆致　悉波呵　東方大神龍王　七里結界　金剛宅　南方大神龍王　七里結界　金剛宅　西方大神龍王　七里結界　金剛宅　北方大神龍王　七里結界　金剛宅　如是三說東方婆鳩深山娑羅伽扠汝百鬼頸著枷　南方婆鳩深山娑羅伽扠汝百鬼頸著枷　西方婆鳩深山娑羅伽扠汝百鬼頸著枷　北方婆鳩深山娑羅伽扠汝百鬼頸著枷　如是三說主疾病者主頭痛者。",
        "from": "T21n1394_001:0911c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主人舍宅門戶者。",
        "from": "T21n1394_001:0912a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當歛諸毒不得擾我諸弟子。",
        "from": "T21n1394_001:0912a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不順我呪頭破作七分。",
        "from": "T21n1394_001:0912a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊而說偈言。",
        "from": "T21n1394_001:0912a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　造宅立堂宇　　安育諸群生",
        "from": "T21n1394_001:0912a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　園林并池沼　　門牆及與圊",
        "from": "T21n1394_001:0912a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　起心興舍室　　動靜應聖靈",
        "from": "T21n1394_001:0912a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　稽首歸命佛　　眾魔莫能傾",
        "from": "T21n1394_001:0912a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　明燈照無極　　五眼因之生",
        "from": "T21n1394_001:0912a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法王大呪力　　動破魔億千",
        "from": "T21n1394_001:0912a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來慈普潤　　威光徹無邊",
        "from": "T21n1394_001:0912a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　莫等咸歸命　　眾邪各自遷",
        "from": "T21n1394_001:0912a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告日月五星二十八宿天神龍鬼。",
        "from": "T21n1394_001:0912a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來受教明聽　佛告言。",
        "from": "T21n1394_001:0912a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得前却某甲之家。",
        "from": "T21n1394_001:0912a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作東廂西廂南[宋-木+牙]北堂。",
        "from": "T21n1394_001:0912a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅日遊月殺土府將軍。",
        "from": "T21n1394_001:0912a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青龍白虎朱雀玄武。",
        "from": "T21n1394_001:0912a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲月劫殺六甲禁忌。",
        "from": "T21n1394_001:0912a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土府伏龍莫妄東西。",
        "from": "T21n1394_001:0912a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有動靜燒香啟聞。",
        "from": "T21n1394_001:0912a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "某甲宅舍是佛金剛之地。",
        "from": "T21n1394_001:0912a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面二百步佛有約言。",
        "from": "T21n1394_001:0912a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸疫鬼神不得妄。",
        "from": "T21n1394_001:0912a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忤忤者頭破作七分。",
        "from": "T21n1394_001:0912a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身不得全不得水漿。",
        "from": "T21n1394_001:0912a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去離本宮宅舍。",
        "from": "T21n1394_001:0912a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已成富貴吉遷田作大得所願。",
        "from": "T21n1394_001:0912a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光榮行來在軍。",
        "from": "T21n1394_001:0912a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仕宦宜官門戶昌熾。",
        "from": "T21n1394_001:0912a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百子千孫父慈子孝。",
        "from": "T21n1394_001:0912b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男女忠貞兄良弟順。",
        "from": "T21n1394_001:0912b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇義仁賢所願如意。",
        "from": "T21n1394_001:0912b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方證明行如菩薩得道如佛。",
        "from": "T21n1394_001:0912b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難若欲安宅。",
        "from": "T21n1394_001:0912b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露出中庭然四十九燈。",
        "from": "T21n1394_001:0912b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掃灑燒香一心懺悔。",
        "from": "T21n1394_001:0912b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮十方諸佛。",
        "from": "T21n1394_001:0912b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難又白佛言。",
        "from": "T21n1394_001:0912b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何名斯經。",
        "from": "T21n1394_001:0912b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語阿難。",
        "from": "T21n1394_001:0912b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經名如來大悲不可思議神力。",
        "from": "T21n1394_001:0912b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名愍念眾生安宅破魔神呪佛說經竟大眾歡喜作禮奉行。",
        "from": "T21n1394_001:0912b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說安宅神呪經",
        "from": "T21n1394_001:0912b09_0",
        "context_with_next_sentence": false
    }
]