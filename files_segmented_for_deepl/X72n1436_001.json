[
    {
        "source_sentence": " 愽山語錄集要序",
        "from": "X72n1436_001:0383b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖之道。",
        "from": "X72n1436_001:0383b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛王寶劍。",
        "from": "X72n1436_001:0383b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得之不易。",
        "from": "X72n1436_001:0383b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用之不易。",
        "from": "X72n1436_001:0383b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付之亦不易。",
        "from": "X72n1436_001:0383b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其皆不易也。",
        "from": "X72n1436_001:0383b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故傳持斯道者。",
        "from": "X72n1436_001:0383b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實鮮其人。",
        "from": "X72n1436_001:0383b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而魚目混珠。",
        "from": "X72n1436_001:0383b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山雞冒鳳者。",
        "from": "X72n1436_001:0383b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞半天下也。",
        "from": "X72n1436_001:0383b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我曹洞一宗。",
        "from": "X72n1436_001:0383b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛於唐。",
        "from": "X72n1436_001:0383b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衰於宋。",
        "from": "X72n1436_001:0383b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至元似復盛而實衰。",
        "from": "X72n1436_001:0383b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其故葢難言之也。",
        "from": "X72n1436_001:0383b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自",
        "from": "X72n1436_001:0383b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元朝初雪庭裕公奉",
        "from": "X72n1436_001:0383b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔住少林。",
        "from": "X72n1436_001:0383b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下學者。",
        "from": "X72n1436_001:0383b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翕然宗之。",
        "from": "X72n1436_001:0383b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷傳至萬曆改元。",
        "from": "X72n1436_001:0383b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小山書遷化。",
        "from": "X72n1436_001:0383b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔幻休潤。",
        "from": "X72n1436_001:0383b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "補其席。",
        "from": "X72n1436_001:0383b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方之腰包而至者。",
        "from": "X72n1436_001:0383b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鳥投林。",
        "from": "X72n1436_001:0383b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如魚赴壑。",
        "from": "X72n1436_001:0383b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而潤公乃講習評唱為事。",
        "from": "X72n1436_001:0383b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大失眾望。",
        "from": "X72n1436_001:0383b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有蘊空忠和尚。",
        "from": "X72n1436_001:0383b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先事小山老人有年。",
        "from": "X72n1436_001:0383b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受其密印。",
        "from": "X72n1436_001:0383b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸隱旴江之廩山。",
        "from": "X72n1436_001:0383b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下不得而物色之。",
        "from": "X72n1436_001:0383b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽昌先師。",
        "from": "X72n1436_001:0383b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從其薙落。",
        "from": "X72n1436_001:0383b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後蒙記莂。",
        "from": "X72n1436_001:0383b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始為弘揚。",
        "from": "X72n1436_001:0383b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得愽山來公繼之。",
        "from": "X72n1436_001:0383b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其道遂大行於世。",
        "from": "X72n1436_001:0383b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師苦參日久。",
        "from": "X72n1436_001:0383b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備甞險阻。",
        "from": "X72n1436_001:0383b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故其言功夫為獨詳。",
        "from": "X72n1436_001:0383b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其慧光渾圓。",
        "from": "X72n1436_001:0383b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨才無礙。",
        "from": "X72n1436_001:0383b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波瀾浩蕩。",
        "from": "X72n1436_001:0383b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫窺涯際。",
        "from": "X72n1436_001:0383b22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故學者多望洋而退。",
        "from": "X72n1436_001:0383b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其門庭緊密。",
        "from": "X72n1436_001:0383b23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金鍮立辯。",
        "from": "X72n1436_001:0383b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高提祖印。",
        "from": "X72n1436_001:0383b23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不妄許可。",
        "from": "X72n1436_001:0383b23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故假雞聲韻者。",
        "from": "X72n1436_001:0383b24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得冐渡關津。",
        "from": "X72n1436_001:0383b24_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而惑亂羣聽也。",
        "from": "X72n1436_001:0383b24_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余因先師遷化後。",
        "from": "X72n1436_001:0383b24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾相依三載。",
        "from": "X72n1436_001:0383c01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無所得於師。",
        "from": "X72n1436_001:0383c01_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然三載之中。",
        "from": "X72n1436_001:0383c01_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未見其一語滲入情識。",
        "from": "X72n1436_001:0383c02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但勉以向上事。",
        "from": "X72n1436_001:0383c02_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則師之有造於余也大矣。",
        "from": "X72n1436_001:0383c02_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及余隱荷山。",
        "from": "X72n1436_001:0383c03_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師自石鼓歸。",
        "from": "X72n1436_001:0383c03_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道經建州。",
        "from": "X72n1436_001:0383c03_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晤於光孝寺。",
        "from": "X72n1436_001:0383c04_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1436_001:0383c04_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽昌塔掃也未。",
        "from": "X72n1436_001:0383c04_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余曰。",
        "from": "X72n1436_001:0383c04_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掃即不廢。",
        "from": "X72n1436_001:0383c04_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇是不許人知。",
        "from": "X72n1436_001:0383c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1436_001:0383c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恁麼則偷掃去也。",
        "from": "X72n1436_001:0383c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余曰。",
        "from": "X72n1436_001:0383c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢祇如此。",
        "from": "X72n1436_001:0383c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚又作麼生。",
        "from": "X72n1436_001:0383c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰。",
        "from": "X72n1436_001:0383c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掃即不廢。",
        "from": "X72n1436_001:0383c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇是不曾動著。",
        "from": "X72n1436_001:0383c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余曰。",
        "from": "X72n1436_001:0383c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚却似不曾掃。",
        "from": "X72n1436_001:0383c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃一咲而別。",
        "from": "X72n1436_001:0383c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及師滅。",
        "from": "X72n1436_001:0383c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其語錄浩繁。",
        "from": "X72n1436_001:0383c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連編累牘。",
        "from": "X72n1436_001:0383c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流通為難。",
        "from": "X72n1436_001:0383c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故遐方僻壤。",
        "from": "X72n1436_001:0383c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞師之名。",
        "from": "X72n1436_001:0383c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向師之化。",
        "from": "X72n1436_001:0383c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而語錄實未甞觸於目者有之。",
        "from": "X72n1436_001:0383c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余自壬午秋。",
        "from": "X72n1436_001:0383c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸錫石鼓。",
        "from": "X72n1436_001:0383c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃因渾朴上人之請。",
        "from": "X72n1436_001:0383c10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僭於全錄中。",
        "from": "X72n1436_001:0383c10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擇其精要。",
        "from": "X72n1436_001:0383c10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "類而合之。",
        "from": "X72n1436_001:0383c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視全錄。",
        "from": "X72n1436_001:0383c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僅十之三。",
        "from": "X72n1436_001:0383c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然簡而易行。",
        "from": "X72n1436_001:0383c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約而易致。",
        "from": "X72n1436_001:0383c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使天下學者。",
        "from": "X72n1436_001:0383c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是窮之。",
        "from": "X72n1436_001:0383c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以見其大全。",
        "from": "X72n1436_001:0383c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使知愽山之道。",
        "from": "X72n1436_001:0383c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其廣大深密有如此。",
        "from": "X72n1436_001:0383c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非癡守一橛者。",
        "from": "X72n1436_001:0383c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可恍惚其萬一也。",
        "from": "X72n1436_001:0383c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼廣陵散不復作矣。",
        "from": "X72n1436_001:0383c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今幸其譜猶存。",
        "from": "X72n1436_001:0383c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安得於凉風白月中。",
        "from": "X72n1436_001:0383c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再聞斯曲乎。",
        "from": "X72n1436_001:0383c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旹",
        "from": "X72n1436_001:0383c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇禎癸未春正月燈節日住福州鼓山湧泉禪寺傳曹洞正宗沙門元賢題於所居之嚬呻齋語錄集要目錄第一卷博山語錄第二卷董巖語錄第三卷大仰語錄鼓山語錄天界語錄答問第四卷拈古頌古贊禪警語第五卷書文序疏第六卷",
        "from": "X72n1436_001:0383c17_0",
        "context_with_next_sentence": false
    }
]