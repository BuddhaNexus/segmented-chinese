[
    {
        "source_sentence": "千眼千臂觀世音菩薩陀羅尼神",
        "from": "T20n1057a_002:0087c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪經卷下",
        "from": "T20n1057a_002:0087c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐總持寺沙門智通譯",
        "from": "T20n1057a_002:0087c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀世音菩薩。",
        "from": "T20n1057a_002:0087c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是呪時三千大千世界。",
        "from": "T20n1057a_002:0087c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至非想非非想天六反震動。",
        "from": "T20n1057a_002:0087c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色究竟天魔醯首羅不安其處皆大恐懼。",
        "from": "T20n1057a_002:0087c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡鬼皆大叫喚受大苦惱。",
        "from": "T20n1057a_002:0087c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東西散走莫知所趣。",
        "from": "T20n1057a_002:0087c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時化身語諸大眾及諸惡鬼神等。",
        "from": "T20n1057a_002:0087c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不隨順我呪者違逆者。",
        "from": "T20n1057a_002:0087c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭破粉碎。",
        "from": "T20n1057a_002:0087c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此呪能摧破諸山乾竭大海。",
        "from": "T20n1057a_002:0087c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此呪能摧阿修羅軍護諸國土。",
        "from": "T20n1057a_002:0087c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此呪能摧伏一切諸惡鬼神。",
        "from": "T20n1057a_002:0087c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸宿一切惡毒。",
        "from": "T20n1057a_002:0087c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸病一切惡人。",
        "from": "T20n1057a_002:0087c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此呪能摧破三十三天皆令降伏。",
        "from": "T20n1057a_002:0087c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子。",
        "from": "T20n1057a_002:0087c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能誦持此呪者。",
        "from": "T20n1057a_002:0087c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人威力說不可盡。",
        "from": "T20n1057a_002:0087c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此呪能令誦持之者豪貴自在。",
        "from": "T20n1057a_002:0087c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能令國王終身愛念。",
        "from": "T20n1057a_002:0087c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱意所求悉皆滿足。",
        "from": "T20n1057a_002:0087c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲降伏魔怨者。",
        "from": "T20n1057a_002:0087c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當燒分求羅香誦我身呪二十一遍。",
        "from": "T20n1057a_002:0087c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲令一切人愛己者。",
        "from": "T20n1057a_002:0087c19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪楊枝二十一遍。",
        "from": "T20n1057a_002:0087c19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口中嚼之即得愛敬。",
        "from": "T20n1057a_002:0087c20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲令自身辯才智慧者。",
        "from": "T20n1057a_002:0087c20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪昌蒲一千八遍。",
        "from": "T20n1057a_002:0087c21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗其心上即得辯才無礙。",
        "from": "T20n1057a_002:0087c21_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作姥陀羅尼心呪印。",
        "from": "T20n1057a_002:0087c22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千眼千臂觀世音菩薩辯才無礙印第十三以兩手相背合掌。",
        "from": "T20n1057a_002:0087c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大母指向前舒。",
        "from": "T20n1057a_002:0087c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印能自護護他。",
        "from": "T20n1057a_002:0087c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須結界隨所遊方。",
        "from": "T20n1057a_002:0087c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或呪淨水或呪淨灰各呪七遍。",
        "from": "T20n1057a_002:0087c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在住處以手掬水掬灰先灑自身。",
        "from": "T20n1057a_002:0087c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後向於四方四角如法散灑。",
        "from": "T20n1057a_002:0087c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1057a_002:0087c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被諸惡鬼眾邪魍魎之所或亂者。",
        "from": "T20n1057a_002:0087c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取石榴枝及柳枝。",
        "from": "T20n1057a_002:0087c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰誦此呪輕打病人無病不差。",
        "from": "T20n1057a_002:0087c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰。",
        "from": "T20n1057a_002:0088a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無薩婆勃陀達摩僧祇比耶(二合)南無阿利耶婆盧吉低攝伐羅寫菩提薩多波寫南無拔折羅(二合)波尼寫菩提薩多波寫跢姪他徒比徒比迦耶徒比娑羅闍婆羅尼馺皤(二合)訶此呪印能降伏諸邪見外道。",
        "from": "T20n1057a_002:0088a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1057a_002:0088a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於晨朝午時日沒三時。",
        "from": "T20n1057a_002:0088a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時誦一遍者。",
        "from": "T20n1057a_002:0088a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即與種種供養十億諸佛無有異也。",
        "from": "T20n1057a_002:0088a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不受女身。",
        "from": "T20n1057a_002:0088a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後永離三塗。",
        "from": "T20n1057a_002:0088a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得往生阿彌陀佛國。",
        "from": "T20n1057a_002:0088a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來授手摩頂。",
        "from": "T20n1057a_002:0088a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝莫怖懼來生我國。",
        "from": "T20n1057a_002:0088a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現身不被橫死。",
        "from": "T20n1057a_002:0088a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為鬼神之所得便。",
        "from": "T20n1057a_002:0088a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩破大千世界滅罪印第十四",
        "from": "T20n1057a_002:0088a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起立以左手向前展臂。",
        "from": "T20n1057a_002:0088a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五指向前散拓竪五指。",
        "from": "T20n1057a_002:0088a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手大母指屈在掌中。",
        "from": "T20n1057a_002:0088a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以四指把拳當右耳上。",
        "from": "T20n1057a_002:0088a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當誦身呪頭指來去。",
        "from": "T20n1057a_002:0088a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印日別須三時。",
        "from": "T20n1057a_002:0088a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時誦七遍。",
        "from": "T20n1057a_002:0088a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅五逆四重罪。",
        "from": "T20n1057a_002:0088a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切眾生生慈悲心。",
        "from": "T20n1057a_002:0088a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能燒一切罪根。",
        "from": "T20n1057a_002:0088a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此身滅後即得值佛。",
        "from": "T20n1057a_002:0088a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼佛土得作轉輪聖王。",
        "from": "T20n1057a_002:0088a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得陀羅尼名曰無量無盡藏。",
        "from": "T20n1057a_002:0088a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得三昧名智等。",
        "from": "T20n1057a_002:0088a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得身中二十八種相。",
        "from": "T20n1057a_002:0088a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現身不患眼舌耳鼻等痛。",
        "from": "T20n1057a_002:0088a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至身中一切疾病悉能消滅。",
        "from": "T20n1057a_002:0088a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有先業罪者亦得消滅。",
        "from": "T20n1057a_002:0088a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見天旱時。",
        "from": "T20n1057a_002:0088a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取烏麻子和稗麻子脂。",
        "from": "T20n1057a_002:0088a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻作丸呪一百八遍。",
        "from": "T20n1057a_002:0088a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲著湫水中即得雨。",
        "from": "T20n1057a_002:0088a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若雨過多。",
        "from": "T20n1057a_002:0088a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取稻穀燒作灰。",
        "from": "T20n1057a_002:0088a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取蔓菁子脂和作丸。",
        "from": "T20n1057a_002:0088a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪之一百八遍。",
        "from": "T20n1057a_002:0088a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲著湫水中雨即止也。",
        "from": "T20n1057a_002:0088a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩降伏三千大千世界魔怨印第十五以五指相叉。",
        "from": "T20n1057a_002:0088a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左押右急把拳。",
        "from": "T20n1057a_002:0088a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當頂上著。",
        "from": "T20n1057a_002:0088a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身呪即得降伏。",
        "from": "T20n1057a_002:0088a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作此法向舍利塔前二十九日夜。",
        "from": "T20n1057a_002:0088a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取白檀香作末。",
        "from": "T20n1057a_002:0088b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗地作曼荼羅。",
        "from": "T20n1057a_002:0088b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中散種種花。",
        "from": "T20n1057a_002:0088b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澡浴清淨著新淨衣。",
        "from": "T20n1057a_002:0088b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手把香爐燒沈水香。",
        "from": "T20n1057a_002:0088b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東坐呪一千八遍。",
        "from": "T20n1057a_002:0088b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是最初功能。",
        "from": "T20n1057a_002:0088b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取芥子烏麻。",
        "from": "T20n1057a_002:0088b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著一處擣為末。",
        "from": "T20n1057a_002:0088b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以三指撮取少許。",
        "from": "T20n1057a_002:0088b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪之一遍擲著火中。",
        "from": "T20n1057a_002:0088b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是七日日別一百八遍。",
        "from": "T20n1057a_002:0088b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後所作悉皆成就。",
        "from": "T20n1057a_002:0088b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩廣大無畏印第十六",
        "from": "T20n1057a_002:0088b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起立並足。",
        "from": "T20n1057a_002:0088b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以右手仰承左肘頭。",
        "from": "T20n1057a_002:0088b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手亦如之。",
        "from": "T20n1057a_002:0088b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於舍利像前。",
        "from": "T20n1057a_002:0088b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身呪一百八遍。",
        "from": "T20n1057a_002:0088b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得無畏施於眾生。",
        "from": "T20n1057a_002:0088b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取茴香白芥子昌蒲捨多婆利(外國藥名)以此等物。",
        "from": "T20n1057a_002:0088b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內火中燒之。",
        "from": "T20n1057a_002:0088b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒火之時應於佛前或在淨處。",
        "from": "T20n1057a_002:0088b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪三十二遍。",
        "from": "T20n1057a_002:0088b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香花供養。",
        "from": "T20n1057a_002:0088b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪法悉皆成就。",
        "from": "T20n1057a_002:0088b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所為之者皆悉剋果。",
        "from": "T20n1057a_002:0088b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若餘呪無驗。",
        "from": "T20n1057a_002:0088b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此呪呪之亦皆成就。",
        "from": "T20n1057a_002:0088b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲乞夢。",
        "from": "T20n1057a_002:0088b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪并作印印眼。",
        "from": "T20n1057a_002:0088b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即有夢隨所欲見皆得見之。",
        "from": "T20n1057a_002:0088b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人無福所向不諧者。",
        "from": "T20n1057a_002:0088b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日誦三遍呪滿七日。",
        "from": "T20n1057a_002:0088b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有所求一切皆得。",
        "from": "T20n1057a_002:0088b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時菩薩在娑竭羅龍宮海會說法。",
        "from": "T20n1057a_002:0088b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見諸龍眾受大苦惱。",
        "from": "T20n1057a_002:0088b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍諸龍眾為度苦惱眾生。",
        "from": "T20n1057a_002:0088b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得離苦無諸怨害。",
        "from": "T20n1057a_002:0088b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時龍女獻一寶珠。",
        "from": "T20n1057a_002:0088b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "價直娑婆世界。",
        "from": "T20n1057a_002:0088b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求法故吾為廣說離諸苦難。",
        "from": "T20n1057a_002:0088b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時水精菩薩。",
        "from": "T20n1057a_002:0088b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益護持此呪。",
        "from": "T20n1057a_002:0088b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說呪曰。",
        "from": "T20n1057a_002:0088b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水精菩薩護持千眼印呪第十七",
        "from": "T20n1057a_002:0088b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘摩隷摩訶毘摩隷郁呵隸摩訶郁呵隸休摩隷摩訶休摩隷薩訶隷止隷涕馺婆訶若有善男子善女人。",
        "from": "T20n1057a_002:0088b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在所遊方受持此千眼千臂菩薩法者。",
        "from": "T20n1057a_002:0088b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當常隨衛護。",
        "from": "T20n1057a_002:0088b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸魔眷屬無惱亂者。",
        "from": "T20n1057a_002:0088b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人急難他國相侵盜賊逆亂。",
        "from": "T20n1057a_002:0088c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用五色縷。",
        "from": "T20n1057a_002:0088c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結誦呪二十一遍。",
        "from": "T20n1057a_002:0088c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一呪一結繫於左臂。",
        "from": "T20n1057a_002:0088c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以左手無名指中指頭指。",
        "from": "T20n1057a_002:0088c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "把拳大母指甲上。",
        "from": "T20n1057a_002:0088c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展小母指。",
        "from": "T20n1057a_002:0088c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指所賊方誦呪七遍。",
        "from": "T20n1057a_002:0088c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆退散不能為害。",
        "from": "T20n1057a_002:0088c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時菩薩在雪山中說法。",
        "from": "T20n1057a_002:0088c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀見夜叉羅剎國中人民。",
        "from": "T20n1057a_002:0088c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯食眾生血肉無有善心。",
        "from": "T20n1057a_002:0088c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為欲利益方便教化。",
        "from": "T20n1057a_002:0088c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力尋至彼國。",
        "from": "T20n1057a_002:0088c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現千眼千臂降伏魔身。",
        "from": "T20n1057a_002:0088c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設成就結姥陀羅尼印。",
        "from": "T20n1057a_002:0088c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時羅剎國王。",
        "from": "T20n1057a_002:0088c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來至我所求哀頂禮。",
        "from": "T20n1057a_002:0088c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以成就印印之。",
        "from": "T20n1057a_002:0088c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得成無上道。",
        "from": "T20n1057a_002:0088c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩成就印第十八",
        "from": "T20n1057a_002:0088c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起立並足。",
        "from": "T20n1057a_002:0088c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌當心。",
        "from": "T20n1057a_002:0088c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以小指相叉左押右。",
        "from": "T20n1057a_002:0088c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身呪二十一遍。",
        "from": "T20n1057a_002:0088c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種皆得成就。",
        "from": "T20n1057a_002:0088c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若救六道苦惱眾生。",
        "from": "T20n1057a_002:0088c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用輪印以十指頭各相拄。",
        "from": "T20n1057a_002:0088c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開腕開掌中使開。",
        "from": "T20n1057a_002:0088c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十指間各相去一寸許。",
        "from": "T20n1057a_002:0088c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是菩薩在六道循還度諸苦難。",
        "from": "T20n1057a_002:0088c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此印轉迴悉皆得離苦(此印法拔吒那羅延長年師繞翻便即歸國并將所翻之本智通畢竟尋逐不得遇於一僧邊得梵本譯出在外無本)。",
        "from": "T20n1057a_002:0088c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩成等正覺印第十九",
        "from": "T20n1057a_002:0088c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結加趺坐。",
        "from": "T20n1057a_002:0088c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以左手舒五指。",
        "from": "T20n1057a_002:0088c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰掌在左膝上。",
        "from": "T20n1057a_002:0088c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手舒五指。",
        "from": "T20n1057a_002:0088c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆手捺右膝上。",
        "from": "T20n1057a_002:0088c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此與滅盡印法同。",
        "from": "T20n1057a_002:0088c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去未來現在諸佛。",
        "from": "T20n1057a_002:0088c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆同此印得佛菩提。",
        "from": "T20n1057a_002:0088c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此印能除一切業障。",
        "from": "T20n1057a_002:0088c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若坐禪諸法不現前者。",
        "from": "T20n1057a_002:0088c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當七日七夜於阿練若處。",
        "from": "T20n1057a_002:0088c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此陀羅尼并此印法。",
        "from": "T20n1057a_002:0088c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心念佛晝夜六時懺悔。",
        "from": "T20n1057a_002:0088c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得諸法現前。",
        "from": "T20n1057a_002:0088c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及所得福無量無邊不可稱計。",
        "from": "T20n1057a_002:0088c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩呼召三十三天印第二十",
        "from": "T20n1057a_002:0088c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以左手四指把拳。",
        "from": "T20n1057a_002:0088c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手握左手大母指。",
        "from": "T20n1057a_002:0088c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如把拳。",
        "from": "T20n1057a_002:0089a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令左手大母指。",
        "from": "T20n1057a_002:0089a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在右手虎口中出頭。",
        "from": "T20n1057a_002:0089a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手頭指來去。",
        "from": "T20n1057a_002:0089a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰。",
        "from": "T20n1057a_002:0089a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)俱智俱智(二)俱耶利(三)遮利遮利(四)遮梨隷(五)蘇婆(二合)訶(六)此陀羅尼印呪不可思議。",
        "from": "T20n1057a_002:0089a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人臨欲眠時。",
        "from": "T20n1057a_002:0089a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪一百八遍。",
        "from": "T20n1057a_002:0089a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心中所願於夢寐中悉得知見。",
        "from": "T20n1057a_002:0089a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能日日誦此呪者。",
        "from": "T20n1057a_002:0089a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能滅一切罪發菩提心。",
        "from": "T20n1057a_002:0089a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人昏夜寐夢。",
        "from": "T20n1057a_002:0089a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸漸增廣皆得吉祥。",
        "from": "T20n1057a_002:0089a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至夢見如來在菩提樹下受記成道。",
        "from": "T20n1057a_002:0089a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至釋梵諸天常來侍衛。",
        "from": "T20n1057a_002:0089a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩呼召天龍八部鬼神印第二十一",
        "from": "T20n1057a_002:0089a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起立並足。",
        "from": "T20n1057a_002:0089a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以左手大母指屈在掌中。",
        "from": "T20n1057a_002:0089a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四指把拳當心上著。",
        "from": "T20n1057a_002:0089a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手亦如之。",
        "from": "T20n1057a_002:0089a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手在右耳邊。",
        "from": "T20n1057a_002:0089a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭指來去。",
        "from": "T20n1057a_002:0089a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪曰。",
        "from": "T20n1057a_002:0089a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無尼乾陀(一)南無阿利闍波陀(二)馺婆訶(三)南無阿利闍羅馺婆訶(四)[王*垔]醯夷醯馺婆訶(五)此呪印若善男子善女人受持讀誦者。",
        "from": "T20n1057a_002:0089a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知七世宿命。",
        "from": "T20n1057a_002:0089a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒蛇不敢螫。",
        "from": "T20n1057a_002:0089a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒藥自然除。",
        "from": "T20n1057a_002:0089a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀不能害王亦不能瞋。",
        "from": "T20n1057a_002:0089a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永劫不受地獄苦。",
        "from": "T20n1057a_002:0089a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦此呪時。",
        "from": "T20n1057a_002:0089a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八部鬼神來詣。",
        "from": "T20n1057a_002:0089a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦呪人邊坐聽誦呪。",
        "from": "T20n1057a_002:0089a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1057a_002:0089a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為鬼魅所著。",
        "from": "T20n1057a_002:0089a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以白縷為呪索。",
        "from": "T20n1057a_002:0089a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一遍一結如是四十九結。",
        "from": "T20n1057a_002:0089a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫其咽下其病即除。",
        "from": "T20n1057a_002:0089a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若國中災疫流行國人死亡多者。",
        "from": "T20n1057a_002:0089a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取國王園池中蓮花一百八莖。",
        "from": "T20n1057a_002:0089a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一花各呪一遍擲置火中。",
        "from": "T20n1057a_002:0089a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒令蕩盡災疫即除。",
        "from": "T20n1057a_002:0089a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩解脫印第二十二",
        "from": "T20n1057a_002:0089a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結加趺坐。",
        "from": "T20n1057a_002:0089a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以左手中指。",
        "from": "T20n1057a_002:0089a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大母指頭相捻。",
        "from": "T20n1057a_002:0089a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰掌向上。",
        "from": "T20n1057a_002:0089a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘三指散舒置於左膝上。",
        "from": "T20n1057a_002:0089a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手亦如之。",
        "from": "T20n1057a_002:0089a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆手置於右膝上。",
        "from": "T20n1057a_002:0089a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身呪二十一遍。",
        "from": "T20n1057a_002:0089a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所願悉皆滿足。",
        "from": "T20n1057a_002:0089b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有苦惱悉皆解脫。",
        "from": "T20n1057a_002:0089b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T20n1057a_002:0089b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具造十惡五逆等罪。",
        "from": "T20n1057a_002:0089b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如閻浮提履地微塵。",
        "from": "T20n1057a_002:0089b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一微塵成於一劫。",
        "from": "T20n1057a_002:0089b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人造若干等罪。",
        "from": "T20n1057a_002:0089b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應墮地獄歷劫受苦永無出期。",
        "from": "T20n1057a_002:0089b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子善女人。",
        "from": "T20n1057a_002:0089b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於舍利像前。",
        "from": "T20n1057a_002:0089b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白月十五日一日一夜不食。",
        "from": "T20n1057a_002:0089b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印誦呪誦滿一百八遍。",
        "from": "T20n1057a_002:0089b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸罪悉皆消滅。",
        "from": "T20n1057a_002:0089b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不消滅者無有是處(此印智通本上先無智通於源州逢一婆羅門僧有此梵本遇會勘之更有此印自得受持大有功効不可思議)。",
        "from": "T20n1057a_002:0089b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩自在神足印第二十三",
        "from": "T20n1057a_002:0089b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起立先以左手握左脚大母指如把拳。",
        "from": "T20n1057a_002:0089b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手握左手腕背上。",
        "from": "T20n1057a_002:0089b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身呪七遍。",
        "from": "T20n1057a_002:0089b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲進千里不以為難誦呪之時勿令聲出。",
        "from": "T20n1057a_002:0089b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩神變自在印第二十四",
        "from": "T20n1057a_002:0089b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以左手大母指捻小指甲上。",
        "from": "T20n1057a_002:0089b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以右手亦如之。",
        "from": "T20n1057a_002:0089b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘三指各散竪。",
        "from": "T20n1057a_002:0089b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合腕相著置於頂上。",
        "from": "T20n1057a_002:0089b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身呪二十一遍。",
        "from": "T20n1057a_002:0089b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得遊行自在(昔有罽賓國僧闍提於北天竺求得此梵本未曾翻譯自得受持威力廣大不敢流傳智通於此僧弟婆伽邊得本依法受持功効不少唯不流行於世此本絕無後同學得者願同功德)。",
        "from": "T20n1057a_002:0089b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請千臂觀音菩薩心王印呪第二十五",
        "from": "T20n1057a_002:0089b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩手合掌虛掌內合腕。",
        "from": "T20n1057a_002:0089b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指來去呪曰(此印是第一根本啟請印)。",
        "from": "T20n1057a_002:0089b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿嚕力帝麗路迦(去夜)毘社(時賀)耶薩婆鑠覩嚧(二合)鉢羅(二合)麼馱那迦羅耶[合*牛]泮莎訶爾時觀世音菩薩。",
        "from": "T20n1057a_002:0089b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛說已歡喜信受作禮而退。",
        "from": "T20n1057a_002:0089b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千眼千臂觀世音菩薩陀羅尼神呪經卷下",
        "from": "T20n1057a_002:0089b26_0",
        "context_with_next_sentence": false
    }
]