[
    {
        "source_sentence": "因明入正理論題辭",
        "from": "X55n0899_001:0471c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法本因曰正理。",
        "from": "X55n0899_001:0471c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹諸法本因曰正智。",
        "from": "X55n0899_001:0471c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理由智顯。",
        "from": "X55n0899_001:0471c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗假因明。",
        "from": "X55n0899_001:0471c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因智為能入。",
        "from": "X55n0899_001:0471c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正理為所入。",
        "from": "X55n0899_001:0471c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩證真現量真比量。",
        "from": "X55n0899_001:0471c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有真能立真能破。",
        "from": "X55n0899_001:0471c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以智照理。",
        "from": "X55n0899_001:0471c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自悟他。",
        "from": "X55n0899_001:0471c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰因明入正理。",
        "from": "X55n0899_001:0471c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如立真如則入真如正理。",
        "from": "X55n0899_001:0471c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立唯識則入唯識正理。",
        "from": "X55n0899_001:0471c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立無常則入無常正理。",
        "from": "X55n0899_001:0471c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟非證真之人。",
        "from": "X55n0899_001:0471c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則一開口而三十三過隨之。",
        "from": "X55n0899_001:0471c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立量豈易乎哉。",
        "from": "X55n0899_001:0471c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如禮樂征伐自天子出。",
        "from": "X55n0899_001:0471c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則諸候拱手聽命。",
        "from": "X55n0899_001:0471c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而天下治。",
        "from": "X55n0899_001:0471c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自諸候大夫出。",
        "from": "X55n0899_001:0471c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則四夷交侵。",
        "from": "X55n0899_001:0471c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民無所措其手足矣。",
        "from": "X55n0899_001:0471c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故閱此論者。",
        "from": "X55n0899_001:0471c15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如客兒閱帝王世譜。",
        "from": "X55n0899_001:0471c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖知昭穆次序。",
        "from": "X55n0899_001:0471c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不能冐神明之胄。",
        "from": "X55n0899_001:0471c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如盡識三千律條。",
        "from": "X55n0899_001:0471c17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而身非刑官。",
        "from": "X55n0899_001:0471c17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂欲加之有罪。",
        "from": "X55n0899_001:0471c17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其誰服之。",
        "from": "X55n0899_001:0471c18_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則學者所急。",
        "from": "X55n0899_001:0471c18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務在證真哉。",
        "from": "X55n0899_001:0471c18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務在證真哉。",
        "from": "X55n0899_001:0471c18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秀水真實居士　馮夢禎　題",
        "from": "X55n0899_001:0471c19_34",
        "context_with_next_sentence": false
    }
]