[
    {
        "source_sentence": "佛祖綱目卷第十七(寒字號)",
        "from": "X85n1594_017:0579c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(漢武帝元狩六年起)乙丑(改元元鼎)辛未(改元元封)丁丑(改元太初)辛巳(改元天漢)乙酉(改元太始)已丑(改元征和)癸巳(改元後元)乙未(昭帝始元元年)辛丑(改元元鳳)丁未(改元元平)戊申(宣帝本始元年)壬子(改元地節)丙辰(改元元康)庚申(改元神爵)癸亥(漢宣帝神爵四年止)(戊辰)十六祖羅睺羅多傳法僧伽難提羅睺羅多。",
        "from": "X85n1594_017:0579c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦毗羅國人。",
        "from": "X85n1594_017:0579c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行化至室羅筏城。",
        "from": "X85n1594_017:0579c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有河名曰金水。",
        "from": "X85n1594_017:0579c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其味殊美。",
        "from": "X85n1594_017:0579c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中流復現五佛影。",
        "from": "X85n1594_017:0579c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅睺羅多告眾曰。",
        "from": "X85n1594_017:0579c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此河之源。",
        "from": "X85n1594_017:0579c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡五百里。",
        "from": "X85n1594_017:0579c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有聖者僧伽難提。",
        "from": "X85n1594_017:0579c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居於彼處。",
        "from": "X85n1594_017:0579c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛誌。",
        "from": "X85n1594_017:0579c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一千年後。",
        "from": "X85n1594_017:0579c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當紹聖位。",
        "from": "X85n1594_017:0579c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語已。",
        "from": "X85n1594_017:0579c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領諸學眾。",
        "from": "X85n1594_017:0579c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遡流而上。",
        "from": "X85n1594_017:0579c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至彼。",
        "from": "X85n1594_017:0579c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見僧伽難提安坐入定。",
        "from": "X85n1594_017:0579c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅睺羅多與眾伺之。",
        "from": "X85n1594_017:0579c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經三七日。",
        "from": "X85n1594_017:0579c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方從定起。",
        "from": "X85n1594_017:0579c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅睺羅多問曰。",
        "from": "X85n1594_017:0579c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝身定耶。",
        "from": "X85n1594_017:0579c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心定耶。",
        "from": "X85n1594_017:0579c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0579c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心俱定。",
        "from": "X85n1594_017:0579c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0579c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心俱定。",
        "from": "X85n1594_017:0579c17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有出入。",
        "from": "X85n1594_017:0579c17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0579c17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有出入。",
        "from": "X85n1594_017:0579c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不失定相。",
        "from": "X85n1594_017:0579c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金在井。",
        "from": "X85n1594_017:0579c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金體常寂。",
        "from": "X85n1594_017:0579c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0579c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若金在井。",
        "from": "X85n1594_017:0579c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若金出井。",
        "from": "X85n1594_017:0579c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金無動靜。",
        "from": "X85n1594_017:0579c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何物出入。",
        "from": "X85n1594_017:0579c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0579c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言金動靜。",
        "from": "X85n1594_017:0579c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何物出入。",
        "from": "X85n1594_017:0579c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言金出入。",
        "from": "X85n1594_017:0579c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金非動靜。",
        "from": "X85n1594_017:0579c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0579c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若金在井。",
        "from": "X85n1594_017:0579c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出者何金。",
        "from": "X85n1594_017:0579c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若金出井。",
        "from": "X85n1594_017:0579c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在者何物。",
        "from": "X85n1594_017:0579c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0579c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金若出井。",
        "from": "X85n1594_017:0579c21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在者非金。",
        "from": "X85n1594_017:0579c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金若在井。",
        "from": "X85n1594_017:0579c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出者非物。",
        "from": "X85n1594_017:0579c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0579c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此義不然。",
        "from": "X85n1594_017:0579c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0579c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼義非著。",
        "from": "X85n1594_017:0579c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0579c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此義當墮。",
        "from": "X85n1594_017:0579c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0579c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此義不成。",
        "from": "X85n1594_017:0579c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0579c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼義不成。",
        "from": "X85n1594_017:0579c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我義成矣。",
        "from": "X85n1594_017:0579c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0579c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我義雖成。",
        "from": "X85n1594_017:0579c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非我故。",
        "from": "X85n1594_017:0579c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰我義已成。",
        "from": "X85n1594_017:0580a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無我故。",
        "from": "X85n1594_017:0580a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0580a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無我故。",
        "from": "X85n1594_017:0580a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復成何義。",
        "from": "X85n1594_017:0580a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0580a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無我故。",
        "from": "X85n1594_017:0580a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故成汝義。",
        "from": "X85n1594_017:0580a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0580a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者師誰。",
        "from": "X85n1594_017:0580a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得是無我。",
        "from": "X85n1594_017:0580a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0580a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我師迦那提婆。",
        "from": "X85n1594_017:0580a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證是無我。",
        "from": "X85n1594_017:0580a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提以偈贊曰。",
        "from": "X85n1594_017:0580a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首提婆師。",
        "from": "X85n1594_017:0580a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而出於仁者。",
        "from": "X85n1594_017:0580a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者無我故。",
        "from": "X85n1594_017:0580a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲師仁者。",
        "from": "X85n1594_017:0580a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多答偈曰。",
        "from": "X85n1594_017:0580a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我已無我故。",
        "from": "X85n1594_017:0580a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝須見我我。",
        "from": "X85n1594_017:0580a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝若師我故。",
        "from": "X85n1594_017:0580a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知我非我我。",
        "from": "X85n1594_017:0580a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提心意豁然。",
        "from": "X85n1594_017:0580a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即求度脫。",
        "from": "X85n1594_017:0580a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0580a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝心自在。",
        "from": "X85n1594_017:0580a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我所繫。",
        "from": "X85n1594_017:0580a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語已。",
        "from": "X85n1594_017:0580a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以右手擎金鉢。",
        "from": "X85n1594_017:0580a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉至梵宮。",
        "from": "X85n1594_017:0580a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取彼香飯。",
        "from": "X85n1594_017:0580a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將齋大眾。",
        "from": "X85n1594_017:0580a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾忽生厭惡之心。",
        "from": "X85n1594_017:0580a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0580a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我之咎。",
        "from": "X85n1594_017:0580a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等自業。",
        "from": "X85n1594_017:0580a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即命難提。",
        "from": "X85n1594_017:0580a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分座同食。",
        "from": "X85n1594_017:0580a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾復訝之。",
        "from": "X85n1594_017:0580a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅多曰。",
        "from": "X85n1594_017:0580a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝不得食。",
        "from": "X85n1594_017:0580a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆繇此故。",
        "from": "X85n1594_017:0580a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知與吾分座者。",
        "from": "X85n1594_017:0580a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即過去娑羅樹王如來也。",
        "from": "X85n1594_017:0580a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍物降跡。",
        "from": "X85n1594_017:0580a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝輩亦莊嚴劫中。",
        "from": "X85n1594_017:0580a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已至三果。",
        "from": "X85n1594_017:0580a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而未證無漏者。",
        "from": "X85n1594_017:0580a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾曰。",
        "from": "X85n1594_017:0580a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我師神力。",
        "from": "X85n1594_017:0580a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯可信矣。",
        "from": "X85n1594_017:0580a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼云過去佛者。",
        "from": "X85n1594_017:0580a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即竊疑焉。",
        "from": "X85n1594_017:0580a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提知眾生慢。",
        "from": "X85n1594_017:0580a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃曰。",
        "from": "X85n1594_017:0580a13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊在日。",
        "from": "X85n1594_017:0580a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界平正。",
        "from": "X85n1594_017:0580a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有丘陵江河溝洫。",
        "from": "X85n1594_017:0580a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水悉甘美。",
        "from": "X85n1594_017:0580a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草木滋茂。",
        "from": "X85n1594_017:0580a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土豐盈。",
        "from": "X85n1594_017:0580a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無八苦。",
        "from": "X85n1594_017:0580a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行十善。",
        "from": "X85n1594_017:0580a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自雙樹示滅。",
        "from": "X85n1594_017:0580a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八百餘年。",
        "from": "X85n1594_017:0580a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界丘墟。",
        "from": "X85n1594_017:0580a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草木枯瘁。",
        "from": "X85n1594_017:0580a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人無至信。",
        "from": "X85n1594_017:0580a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念輕微。",
        "from": "X85n1594_017:0580a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信真如。",
        "from": "X85n1594_017:0580a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟愛神力。",
        "from": "X85n1594_017:0580a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖。",
        "from": "X85n1594_017:0580a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手漸展入地。",
        "from": "X85n1594_017:0580a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至金剛輪際。",
        "from": "X85n1594_017:0580a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取甘露水。",
        "from": "X85n1594_017:0580a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以琉璃器。",
        "from": "X85n1594_017:0580a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持至會所。",
        "from": "X85n1594_017:0580a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾見之。",
        "from": "X85n1594_017:0580a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時欽慕。",
        "from": "X85n1594_017:0580a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悔過作禮。",
        "from": "X85n1594_017:0580a19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是羅多命難提。",
        "from": "X85n1594_017:0580a19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而付法眼。",
        "from": "X85n1594_017:0580a19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "X85n1594_017:0580a19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法實無證。",
        "from": "X85n1594_017:0580a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不取亦不離。",
        "from": "X85n1594_017:0580a20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非有無相。",
        "from": "X85n1594_017:0580a20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外云何起。",
        "from": "X85n1594_017:0580a20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提聞命。",
        "from": "X85n1594_017:0580a20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬奉勤至。",
        "from": "X85n1594_017:0580a21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說偈贊曰。",
        "from": "X85n1594_017:0580a21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉大聖者。",
        "from": "X85n1594_017:0580a21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心明逾日月。",
        "from": "X85n1594_017:0580a21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一光照世界。",
        "from": "X85n1594_017:0580a22_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暗魔無不拔。",
        "from": "X85n1594_017:0580a22_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅睺羅多付法已。",
        "from": "X85n1594_017:0580a22_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安坐歸寂。",
        "from": "X85n1594_017:0580a22_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾建塔。",
        "from": "X85n1594_017:0580a23_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土漢武帝二十八年戊辰也。",
        "from": "X85n1594_017:0580a23_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(丁未)十七祖僧伽難提傳法伽耶舍多僧伽難提。",
        "from": "X85n1594_017:0580a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "室羅筏城人。",
        "from": "X85n1594_017:0580b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶莊嚴王之子。",
        "from": "X85n1594_017:0580b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生而能言。",
        "from": "X85n1594_017:0580b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常讚佛事。",
        "from": "X85n1594_017:0580b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七歲即厭世樂。",
        "from": "X85n1594_017:0580b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偈告其父母曰。",
        "from": "X85n1594_017:0580b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首大慈父。",
        "from": "X85n1594_017:0580b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和南骨血母。",
        "from": "X85n1594_017:0580b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今欲出家。",
        "from": "X85n1594_017:0580b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸願哀愍故。",
        "from": "X85n1594_017:0580b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母固止之。",
        "from": "X85n1594_017:0580b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂終日不食。",
        "from": "X85n1594_017:0580b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃許其在家出家。",
        "from": "X85n1594_017:0580b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號僧伽難提。",
        "from": "X85n1594_017:0580b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復命沙門禪利多為之師。",
        "from": "X85n1594_017:0580b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積十九載。",
        "from": "X85n1594_017:0580b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞退倦。",
        "from": "X85n1594_017:0580b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每自念言。",
        "from": "X85n1594_017:0580b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身居王宮。",
        "from": "X85n1594_017:0580b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡為出家。",
        "from": "X85n1594_017:0580b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕天光下燭。",
        "from": "X85n1594_017:0580b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一路坦平。",
        "from": "X85n1594_017:0580b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺徐行。",
        "from": "X85n1594_017:0580b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約十里許。",
        "from": "X85n1594_017:0580b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至大巖前。",
        "from": "X85n1594_017:0580b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有石窟焉。",
        "from": "X85n1594_017:0580b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃燕寂於中。",
        "from": "X85n1594_017:0580b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父既失子。",
        "from": "X85n1594_017:0580b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即擯禪利多。",
        "from": "X85n1594_017:0580b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出國訪尋其子。",
        "from": "X85n1594_017:0580b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知所在。",
        "from": "X85n1594_017:0580b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經十年。",
        "from": "X85n1594_017:0580b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧伽難提遇羅睺羅多。",
        "from": "X85n1594_017:0580b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法得記已。",
        "from": "X85n1594_017:0580b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行化至摩提國。",
        "from": "X85n1594_017:0580b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有凉風襲眾。",
        "from": "X85n1594_017:0580b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心悅適非常。",
        "from": "X85n1594_017:0580b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不知其然。",
        "from": "X85n1594_017:0580b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0580b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此道德之風也。",
        "from": "X85n1594_017:0580b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當有聖者出世。",
        "from": "X85n1594_017:0580b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗣續祖燈乎。",
        "from": "X85n1594_017:0580b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖。",
        "from": "X85n1594_017:0580b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神力攝諸大眾。",
        "from": "X85n1594_017:0580b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊歷山谷。",
        "from": "X85n1594_017:0580b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食頃至一峯下。",
        "from": "X85n1594_017:0580b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂眾曰。",
        "from": "X85n1594_017:0580b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此峯嵿有紫雲如蓋。",
        "from": "X85n1594_017:0580b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人居此矣。",
        "from": "X85n1594_017:0580b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即與大眾。",
        "from": "X85n1594_017:0580b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徘徊久之。",
        "from": "X85n1594_017:0580b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見山舍。",
        "from": "X85n1594_017:0580b14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一童子持圓鑑。",
        "from": "X85n1594_017:0580b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直造難提前。",
        "from": "X85n1594_017:0580b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提問。",
        "from": "X85n1594_017:0580b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝幾歲耶。",
        "from": "X85n1594_017:0580b14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰百歲。",
        "from": "X85n1594_017:0580b15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提曰。",
        "from": "X85n1594_017:0580b15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝年尚幼。",
        "from": "X85n1594_017:0580b15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何言百歲。",
        "from": "X85n1594_017:0580b15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童曰。",
        "from": "X85n1594_017:0580b15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我不會理。",
        "from": "X85n1594_017:0580b15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正百歲耳。",
        "from": "X85n1594_017:0580b16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0580b16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝善機耶。",
        "from": "X85n1594_017:0580b16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童曰。",
        "from": "X85n1594_017:0580b16_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "X85n1594_017:0580b16_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人生百歲。",
        "from": "X85n1594_017:0580b16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不會諸佛機。",
        "from": "X85n1594_017:0580b17_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如生一日。",
        "from": "X85n1594_017:0580b17_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得決了之。",
        "from": "X85n1594_017:0580b17_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0580b17_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝手中者。",
        "from": "X85n1594_017:0580b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何所表。",
        "from": "X85n1594_017:0580b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童曰。",
        "from": "X85n1594_017:0580b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛大圓鑑。",
        "from": "X85n1594_017:0580b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外無瑕翳。",
        "from": "X85n1594_017:0580b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩人同得見。",
        "from": "X85n1594_017:0580b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心眼皆相似。",
        "from": "X85n1594_017:0580b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼父母聞子語。",
        "from": "X85n1594_017:0580b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即捨令出家。",
        "from": "X85n1594_017:0580b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提携至本處。",
        "from": "X85n1594_017:0580b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受具戒訖。",
        "from": "X85n1594_017:0580b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名伽耶舍多。",
        "from": "X85n1594_017:0580b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他時聞風吹殿鈴聲。",
        "from": "X85n1594_017:0580b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提問曰。",
        "from": "X85n1594_017:0580b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈴鳴耶。",
        "from": "X85n1594_017:0580b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風鳴耶。",
        "from": "X85n1594_017:0580b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍多曰。",
        "from": "X85n1594_017:0580b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非風鈴鳴。",
        "from": "X85n1594_017:0580b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我心鳴耳。",
        "from": "X85n1594_017:0580b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0580b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心復誰乎。",
        "from": "X85n1594_017:0580b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍多曰。",
        "from": "X85n1594_017:0580b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱寂靜故。",
        "from": "X85n1594_017:0580b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提曰。",
        "from": "X85n1594_017:0580b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉。",
        "from": "X85n1594_017:0580b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼吾道者。",
        "from": "X85n1594_017:0580b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非子而誰。",
        "from": "X85n1594_017:0580b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即付法眼。",
        "from": "X85n1594_017:0580b23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "X85n1594_017:0580b23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心地本無生。",
        "from": "X85n1594_017:0580b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因地從緣起。",
        "from": "X85n1594_017:0580b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣種不相妨。",
        "from": "X85n1594_017:0580b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華果亦復爾。",
        "from": "X85n1594_017:0580b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧伽難提既付法已。",
        "from": "X85n1594_017:0580c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手攀樹而化。",
        "from": "X85n1594_017:0580c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾議曰。",
        "from": "X85n1594_017:0580c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者樹下歸寂。",
        "from": "X85n1594_017:0580c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其垂蔭後裔乎。",
        "from": "X85n1594_017:0580c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將奉全身於高原。",
        "from": "X85n1594_017:0580c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建塔。",
        "from": "X85n1594_017:0580c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾力不能舉。",
        "from": "X85n1594_017:0580c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸象力挽之。",
        "from": "X85n1594_017:0580c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不動。",
        "from": "X85n1594_017:0580c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂就樹下焚之。",
        "from": "X85n1594_017:0580c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身盡。",
        "from": "X85n1594_017:0580c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹更蓊鬱。",
        "from": "X85n1594_017:0580c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土漢昭帝十三年丁未歲也。",
        "from": "X85n1594_017:0580c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第十七",
        "from": "X85n1594_017:0580c06_0",
        "context_with_next_sentence": false
    }
]