[
    {
        "source_sentence": "居士傳三十二",
        "from": "X88n1646_032:0241a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張子韶傳",
        "from": "X88n1646_032:0241a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張子韶。",
        "from": "X88n1646_032:0241a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名九成。",
        "from": "X88n1646_032:0241a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號無垢居士。",
        "from": "X88n1646_032:0241a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錢塘人也。",
        "from": "X88n1646_032:0241a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少好學。",
        "from": "X88n1646_032:0241a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十四入學宮。",
        "from": "X88n1646_032:0241a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉閤終日。",
        "from": "X88n1646_032:0241a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寒暑不越戶限。",
        "from": "X88n1646_032:0241a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比舍生穴隙視之。",
        "from": "X88n1646_032:0241a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斂膝危坐。",
        "from": "X88n1646_032:0241a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若與神明伍。",
        "from": "X88n1646_032:0241a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相與歎服。",
        "from": "X88n1646_032:0241a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而聞客談楊大年．呂微仲事。",
        "from": "X88n1646_032:0241a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心慕之。",
        "from": "X88n1646_032:0241a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁寶印明禪師問入道之要。",
        "from": "X88n1646_032:0241a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶印曰。",
        "from": "X88n1646_032:0241a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不捨。",
        "from": "X88n1646_032:0241a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久久成熟。",
        "from": "X88n1646_032:0241a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時節到來。",
        "from": "X88n1646_032:0241a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然證入。",
        "from": "X88n1646_032:0241a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令看柏樹子話。",
        "from": "X88n1646_032:0241a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之無省。",
        "from": "X88n1646_032:0241a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁善權清禪師問。",
        "from": "X88n1646_032:0241a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此事人人有分。",
        "from": "X88n1646_032:0241a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "箇箇圓成是否。",
        "from": "X88n1646_032:0241a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善權曰然。",
        "from": "X88n1646_032:0241a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰。",
        "from": "X88n1646_032:0241a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故九成無入處。",
        "from": "X88n1646_032:0241a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善權出袖中數珠示之曰此是誰的。",
        "from": "X88n1646_032:0241a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶不能對。",
        "from": "X88n1646_032:0241a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善權復袖之曰是汝的則拈取去。",
        "from": "X88n1646_032:0241b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔涉思惟則不是汝的也。",
        "from": "X88n1646_032:0241b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶悚然。",
        "from": "X88n1646_032:0241b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕如廁。",
        "from": "X88n1646_032:0241b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正提柏樹子話。",
        "from": "X88n1646_032:0241b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞蛙鳴契入。",
        "from": "X88n1646_032:0241b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈曰。",
        "from": "X88n1646_032:0241b03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春天月下一聲蛙。",
        "from": "X88n1646_032:0241b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撞破乾坤共一家。",
        "from": "X88n1646_032:0241b03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正恁麼時誰會得。",
        "from": "X88n1646_032:0241b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嶺頭脚痛有元沙。",
        "from": "X88n1646_032:0241b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會先忌日。",
        "from": "X88n1646_032:0241b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就明靜菴飯僧。",
        "from": "X88n1646_032:0241b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主僧惟尚纔見乃展手。",
        "from": "X88n1646_032:0241b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶便喝。",
        "from": "X88n1646_032:0241b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟尚批其頰。",
        "from": "X88n1646_032:0241b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶趨前。",
        "from": "X88n1646_032:0241b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟尚曰。",
        "from": "X88n1646_032:0241b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張學錄何得謗大般若。",
        "from": "X88n1646_032:0241b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰。",
        "from": "X88n1646_032:0241b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九成見處祇如此。",
        "from": "X88n1646_032:0241b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和尚又作麼生。",
        "from": "X88n1646_032:0241b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟尚舉馬祖升堂百丈卷席話詰之。",
        "from": "X88n1646_032:0241b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敘語未終。",
        "from": "X88n1646_032:0241b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶推倒卓子。",
        "from": "X88n1646_032:0241b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟尚大呼張學錄殺人。",
        "from": "X88n1646_032:0241b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶躍起問旁僧曰汝又作麼生。",
        "from": "X88n1646_032:0241b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧罔措。",
        "from": "X88n1646_032:0241b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶毆之。",
        "from": "X88n1646_032:0241b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顧惟尚曰。",
        "from": "X88n1646_032:0241b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖禰不了殃及兒孫。",
        "from": "X88n1646_032:0241b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟尚大笑。",
        "from": "X88n1646_032:0241b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶呈偈曰。",
        "from": "X88n1646_032:0241b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷席因緣也大奇。",
        "from": "X88n1646_032:0241b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸方聞舉盡攢眉。",
        "from": "X88n1646_032:0241b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臺盤趯倒人星散。",
        "from": "X88n1646_032:0241b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直漢從來不受欺。",
        "from": "X88n1646_032:0241b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟尚亦作偈印之。",
        "from": "X88n1646_032:0241b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹興二年擢進士第。",
        "from": "X88n1646_032:0241b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一授鎮東僉判。",
        "from": "X88n1646_032:0241b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明於聽斷。",
        "from": "X88n1646_032:0241b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浙東諸郡訟有不決者皆訴之。",
        "from": "X88n1646_032:0241b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民冐鹺禁。",
        "from": "X88n1646_032:0241b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "監司有所支連。",
        "from": "X88n1646_032:0241b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶爭之不得。",
        "from": "X88n1646_032:0241b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂投檄歸。",
        "from": "X88n1646_032:0241b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃之以趙鼎薦召為太常博士。",
        "from": "X88n1646_032:0241b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷著作郎。",
        "from": "X88n1646_032:0241b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋拜禮部侍郎。",
        "from": "X88n1646_032:0241b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進對時屢以正心術為言。",
        "from": "X88n1646_032:0241b16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又推陳孟子保民之旨。",
        "from": "X88n1646_032:0241b17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高宗甚向之。",
        "from": "X88n1646_032:0241b17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會金人來議和。",
        "from": "X88n1646_032:0241b17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶持不可。",
        "from": "X88n1646_032:0241b18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為執政秦檜所嫉。",
        "from": "X88n1646_032:0241b18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改祕閤修撰提舉江州太平興國宮。",
        "from": "X88n1646_032:0241b18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造徑山。",
        "from": "X88n1646_032:0241b19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁大慧杲禪師。",
        "from": "X88n1646_032:0241b19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "議及格物。",
        "from": "X88n1646_032:0241b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧曰。",
        "from": "X88n1646_032:0241b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公祇知有格物。",
        "from": "X88n1646_032:0241b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知有物格。",
        "from": "X88n1646_032:0241b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶請其說。",
        "from": "X88n1646_032:0241b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧曰。",
        "from": "X88n1646_032:0241b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見小說所載。",
        "from": "X88n1646_032:0241b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐人有與安祿山謀反者。",
        "from": "X88n1646_032:0241b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人先為閬守。",
        "from": "X88n1646_032:0241b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有畫像存焉。",
        "from": "X88n1646_032:0241b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明皇幸蜀見之。",
        "from": "X88n1646_032:0241b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怒令侍臣以劒擊像首。",
        "from": "X88n1646_032:0241b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人在陝西忽頭落。",
        "from": "X88n1646_032:0241b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶言下領旨。",
        "from": "X88n1646_032:0241b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題壁曰。",
        "from": "X88n1646_032:0241b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶格物。",
        "from": "X88n1646_032:0241b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙喜物格。",
        "from": "X88n1646_032:0241b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲識一貫。",
        "from": "X88n1646_032:0241b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩箇五百。",
        "from": "X88n1646_032:0241b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日又問曰。",
        "from": "X88n1646_032:0241c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前輩既得後。",
        "from": "X88n1646_032:0241c01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故復理會四料揀。",
        "from": "X88n1646_032:0241c01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧曰。",
        "from": "X88n1646_032:0241c01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公之所見但可入佛不可入魔。",
        "from": "X88n1646_032:0241c02_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可不從料揀中去耶。",
        "from": "X88n1646_032:0241c02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶遂舉克符問臨濟至人境兩俱奪。",
        "from": "X88n1646_032:0241c03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺欣然。",
        "from": "X88n1646_032:0241c03_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧曰余則不然。",
        "from": "X88n1646_032:0241c04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰師意如何。",
        "from": "X88n1646_032:0241c04_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧曰。",
        "from": "X88n1646_032:0241c04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "打破蔡州城。",
        "from": "X88n1646_032:0241c04_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺却吳元濟。",
        "from": "X88n1646_032:0241c05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶廓然得大自在。",
        "from": "X88n1646_032:0241c05_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞曰。",
        "from": "X88n1646_032:0241c05_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余聞徑山老人所舉因緣。",
        "from": "X88n1646_032:0241c05_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如千門萬戶。",
        "from": "X88n1646_032:0241c06_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不消一蹋而開。",
        "from": "X88n1646_032:0241c06_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或與聯輿接席。",
        "from": "X88n1646_032:0241c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "登高山之上。",
        "from": "X88n1646_032:0241c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或緩步徐行。",
        "from": "X88n1646_032:0241c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入深水之中。",
        "from": "X88n1646_032:0241c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非出常情之流。",
        "from": "X88n1646_032:0241c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫知吾二人落處。",
        "from": "X88n1646_032:0241c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余得了末後大事。",
        "from": "X88n1646_032:0241c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實在老人處。",
        "from": "X88n1646_032:0241c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此瓣香不敢孤負老人也。",
        "from": "X88n1646_032:0241c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既復謫守邵州。",
        "from": "X88n1646_032:0241c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逾年丁父憂歸。",
        "from": "X88n1646_032:0241c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒哭後詣徑山飯僧。",
        "from": "X88n1646_032:0241c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請大慧升座說法。",
        "from": "X88n1646_032:0241c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而秦檜憾子韶不已。",
        "from": "X88n1646_032:0241c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命言者劾子韶謗訕朝政并連大慧。",
        "from": "X88n1646_032:0241c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂竄大慧於衡陽。",
        "from": "X88n1646_032:0241c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶落職安置安南軍。",
        "from": "X88n1646_032:0241c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既至。",
        "from": "X88n1646_032:0241c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉門謝客。",
        "from": "X88n1646_032:0241c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以經史自娛。",
        "from": "X88n1646_032:0241c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縕袍糲食。",
        "from": "X88n1646_032:0241c13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親知餽遺一切謝遣。",
        "from": "X88n1646_032:0241c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安南故少雪。",
        "from": "X88n1646_032:0241c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲多疫癘。",
        "from": "X88n1646_032:0241c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶乃為民禱於龍神。",
        "from": "X88n1646_032:0241c14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甫半日得雪盈寸。",
        "from": "X88n1646_032:0241c15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔冦擾鄰境。",
        "from": "X88n1646_032:0241c15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或請避之。",
        "from": "X88n1646_032:0241c15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰。",
        "from": "X88n1646_032:0241c15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾謫此邦死分也。",
        "from": "X88n1646_032:0241c16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何避為。",
        "from": "X88n1646_032:0241c16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因為守貳畫計。",
        "from": "X88n1646_032:0241c16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以火攻之。",
        "from": "X88n1646_032:0241c16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宼散走。",
        "from": "X88n1646_032:0241c17_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居十四年。",
        "from": "X88n1646_032:0241c17_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦檜死。",
        "from": "X88n1646_032:0241c17_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復祕閣修撰知溫州。",
        "from": "X88n1646_032:0241c17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧亦放還梅陽。",
        "from": "X88n1646_032:0241c17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至贛州維舟俟。",
        "from": "X88n1646_032:0241c18_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之而子韶適至。",
        "from": "X88n1646_032:0241c18_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連舟東下。",
        "from": "X88n1646_032:0241c18_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至新淦而別。",
        "from": "X88n1646_032:0241c19_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶論不愁念起惟怕覺遲。",
        "from": "X88n1646_032:0241c19_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈曰。",
        "from": "X88n1646_032:0241c19_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念是賊子。",
        "from": "X88n1646_032:0241c20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺是賊魁。",
        "from": "X88n1646_032:0241c20_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搥殺賊魁。",
        "from": "X88n1646_032:0241c20_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賊子何歸。",
        "from": "X88n1646_032:0241c20_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堂堂大路。",
        "from": "X88n1646_032:0241c20_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟吾獨之。",
        "from": "X88n1646_032:0241c21_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越南燕北。",
        "from": "X88n1646_032:0241c21_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遼東隴西。",
        "from": "X88n1646_032:0241c21_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撒手便到。",
        "from": "X88n1646_032:0241c21_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何慮何疑。",
        "from": "X88n1646_032:0241c21_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神劒在山。",
        "from": "X88n1646_032:0241c22_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鍔冷光寒。",
        "from": "X88n1646_032:0241c22_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魈夔罔兩。",
        "from": "X88n1646_032:0241c22_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫之敢干。",
        "from": "X88n1646_032:0241c22_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名真覺。",
        "from": "X88n1646_032:0241c22_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦時[車*度]轢。",
        "from": "X88n1646_032:0241c23_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慧賡之曰。",
        "from": "X88n1646_032:0241c23_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說覺說念。",
        "from": "X88n1646_032:0241c23_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻背作面。",
        "from": "X88n1646_032:0241c23_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無念無覺。",
        "from": "X88n1646_032:0241c23_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何處摸索。",
        "from": "X88n1646_032:0241c24_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起是誰起。",
        "from": "X88n1646_032:0241c24_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺是誰覺。",
        "from": "X88n1646_032:0241c24_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豁開戶牖。",
        "from": "X88n1646_032:0241c24_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太虗遼廓。",
        "from": "X88n1646_032:0241c24_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撒手前行不顧人。",
        "from": "X88n1646_032:0242a01_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦時[車*度]轢何時作。",
        "from": "X88n1646_032:0242a01_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既至溫。",
        "from": "X88n1646_032:0242a01_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寬其賦斂。",
        "from": "X88n1646_032:0242a01_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道以禮法。",
        "from": "X88n1646_032:0242a02_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民大和悅。",
        "from": "X88n1646_032:0242a02_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會戶部遣吏督軍糧。",
        "from": "X88n1646_032:0242a02_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶移書陳其害。",
        "from": "X88n1646_032:0242a02_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戶部持之。",
        "from": "X88n1646_032:0242a03_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂乞祠歸。",
        "from": "X88n1646_032:0242a03_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明年大慧復領徑山。",
        "from": "X88n1646_032:0242a03_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訪子韶於慶善院。",
        "from": "X88n1646_032:0242a04_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰。",
        "from": "X88n1646_032:0242a04_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九成每於夢中誦語孟何如大。",
        "from": "X88n1646_032:0242a04_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧舉圓覺經云。",
        "from": "X88n1646_032:0242a05_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由寂靜故。",
        "from": "X88n1646_032:0242a05_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界。",
        "from": "X88n1646_032:0242a05_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸如來心。",
        "from": "X88n1646_032:0242a05_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中顯現。",
        "from": "X88n1646_032:0242a06_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鏡中像。",
        "from": "X88n1646_032:0242a06_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰。",
        "from": "X88n1646_032:0242a06_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非老師莫聞此論也。",
        "from": "X88n1646_032:0242a06_90",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶閒居。",
        "from": "X88n1646_032:0242a07_91",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取華嚴善知識。",
        "from": "X88n1646_032:0242a07_92",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日供其二回食以飯僧。",
        "from": "X88n1646_032:0242a07_93",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又甞供十六大天。",
        "from": "X88n1646_032:0242a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杯中茶悉化乳。",
        "from": "X88n1646_032:0242a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作偈曰。",
        "from": "X88n1646_032:0242a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首十方佛法僧。",
        "from": "X88n1646_032:0242a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首一切護法天。",
        "from": "X88n1646_032:0242a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今供養三寶天。",
        "from": "X88n1646_032:0242a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如海一滴牛一毛。",
        "from": "X88n1646_032:0242a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有何妙術能感格。",
        "from": "X88n1646_032:0242a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試借意識為汝說。",
        "from": "X88n1646_032:0242a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我心與佛天無異。",
        "from": "X88n1646_032:0242a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一塵纔起大地隔。",
        "from": "X88n1646_032:0242a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倘或塵消覺圓淨。",
        "from": "X88n1646_032:0242a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故佛天來降臨。",
        "from": "X88n1646_032:0242a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲供佛佛即現。",
        "from": "X88n1646_032:0242a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲供天天亦現。",
        "from": "X88n1646_032:0242a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子若或生狐疑。",
        "from": "X88n1646_032:0242a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試問此乳何處來。",
        "from": "X88n1646_032:0242a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狐疑即塵塵即疑。",
        "from": "X88n1646_032:0242a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終與佛天不相似。",
        "from": "X88n1646_032:0242a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝掃狐疑。",
        "from": "X88n1646_032:0242a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如湯沃雪水消氷。",
        "from": "X88n1646_032:0242a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今微有疑與惑。",
        "from": "X88n1646_032:0242a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鷂子便到新羅國。",
        "from": "X88n1646_032:0242a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸數月。",
        "from": "X88n1646_032:0242a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦風痺。",
        "from": "X88n1646_032:0242a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家人環之泣。",
        "from": "X88n1646_032:0242a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰。",
        "from": "X88n1646_032:0242a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾平生踐履。",
        "from": "X88n1646_032:0242a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日愈覺有力。",
        "from": "X88n1646_032:0242a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何乃為兒女子呫呫涕泣耶。",
        "from": "X88n1646_032:0242a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾稍閒。",
        "from": "X88n1646_032:0242a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設絳帳自居。",
        "from": "X88n1646_032:0242a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訓子姪益勤。",
        "from": "X88n1646_032:0242a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十九年夏六月六日語從子榕曰。",
        "from": "X88n1646_032:0242a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾其逝乎。",
        "from": "X88n1646_032:0242a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是夕疾作。",
        "from": "X88n1646_032:0242a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂卒。",
        "from": "X88n1646_032:0242a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年六十有八。",
        "from": "X88n1646_032:0242a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝命復敷文閣待制。",
        "from": "X88n1646_032:0242a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈左朝請大夫。",
        "from": "X88n1646_032:0242a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶平生謹於法度。",
        "from": "X88n1646_032:0242a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣食器物率常用敝惡。",
        "from": "X88n1646_032:0242a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或問此是性耶。",
        "from": "X88n1646_032:0242a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子韶曰。",
        "from": "X88n1646_032:0242a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝且道我每日用心在何處。",
        "from": "X88n1646_032:0242a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既老讀書不輟。",
        "from": "X88n1646_032:0242a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞倚柱就明。",
        "from": "X88n1646_032:0242a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲久雙趺隱然(五燈會元．宋史)。",
        "from": "X88n1646_032:0242a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_032:0242a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予讀無垢居士書。",
        "from": "X88n1646_032:0242a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖欲擔荷五常。",
        "from": "X88n1646_032:0242a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闡孔孟心法者。",
        "from": "X88n1646_032:0242a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其於佛道未暇及也。",
        "from": "X88n1646_032:0242b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而世儒往往以禪議之。",
        "from": "X88n1646_032:0242b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意其生平得力之故。",
        "from": "X88n1646_032:0242b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固有不可掩者乎。",
        "from": "X88n1646_032:0242b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則子韶之所以為子韶也。",
        "from": "X88n1646_032:0242b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳曰。",
        "from": "X88n1646_032:0242b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予於佛道亦未暇及。",
        "from": "X88n1646_032:0242b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然使予有立於世。",
        "from": "X88n1646_032:0242b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知必有以禪議予者矣。",
        "from": "X88n1646_032:0242b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸讚語。",
        "from": "X88n1646_032:0242b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖具深心。",
        "from": "X88n1646_032:0242b05_2",
        "context_with_next_sentence": false
    }
]