[
    {
        "source_sentence": "護命放生軌儀法",
        "from": "T45n1901_001:0902a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師義淨撰",
        "from": "T45n1901_001:0902a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫以懷生者。",
        "from": "T45n1901_001:0902a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆愛其生。",
        "from": "T45n1901_001:0902a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上通賢智。",
        "from": "T45n1901_001:0902a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有死者。",
        "from": "T45n1901_001:0902a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸畏其死。",
        "from": "T45n1901_001:0902a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下洎蜫蟲。",
        "from": "T45n1901_001:0902a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是善逝隨事而修慈。",
        "from": "T45n1901_001:0902a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不損含識。",
        "from": "T45n1901_001:0902a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量內身而准物。",
        "from": "T45n1901_001:0902a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀杖不加唯以大悲。",
        "from": "T45n1901_001:0902a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣揚法化。",
        "from": "T45n1901_001:0902a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於護生處。",
        "from": "T45n1901_001:0902a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極致慇懃。",
        "from": "T45n1901_001:0902a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛弟子。",
        "from": "T45n1901_001:0902a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理應隨作。",
        "from": "T45n1901_001:0902a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀蟲濾水。",
        "from": "T45n1901_001:0902a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是出家之要儀。",
        "from": "T45n1901_001:0902a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見危存護。",
        "from": "T45n1901_001:0902a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃悲中之拯急。",
        "from": "T45n1901_001:0902a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既知有蟲。",
        "from": "T45n1901_001:0902a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律文令作放生器者。",
        "from": "T45n1901_001:0902a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為西國久行。",
        "from": "T45n1901_001:0902a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人皆共解東夏先來未識。",
        "from": "T45n1901_001:0902a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故亦須委其儀。",
        "from": "T45n1901_001:0902a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不具陳。",
        "from": "T45n1901_001:0902a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無由曉悟。",
        "from": "T45n1901_001:0902a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其器任用鐵銅瓦木。",
        "from": "T45n1901_001:0902a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓦即安鼻鐵木准成。",
        "from": "T45n1901_001:0902a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若擬隨身將去。",
        "from": "T45n1901_001:0902a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可用銅作。",
        "from": "T45n1901_001:0902a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯受二升三升。",
        "from": "T45n1901_001:0902a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是舊來小銅罐子。",
        "from": "T45n1901_001:0902a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還施銅系。",
        "from": "T45n1901_001:0902a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令穿手得過。",
        "from": "T45n1901_001:0902a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底傍一邊。",
        "from": "T45n1901_001:0902a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須安銅鈕。",
        "from": "T45n1901_001:0902a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可受小梅指頭。",
        "from": "T45n1901_001:0902a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若乞食去時。",
        "from": "T45n1901_001:0902a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿在左臂。",
        "from": "T45n1901_001:0902a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以衣掩蓋。",
        "from": "T45n1901_001:0902a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手携鉢。",
        "from": "T45n1901_001:0902a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞食得已。",
        "from": "T45n1901_001:0902a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨至一家。",
        "from": "T45n1901_001:0902a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置飯鉢。",
        "from": "T45n1901_001:0902b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自將淨繩一條。",
        "from": "T45n1901_001:0902b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如麁箸許。",
        "from": "T45n1901_001:0902b01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨井深淺。",
        "from": "T45n1901_001:0902b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫罐取水。",
        "from": "T45n1901_001:0902b02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濾以小羅。",
        "from": "T45n1901_001:0902b02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斟酌得足。",
        "from": "T45n1901_001:0902b02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以繩一頭穿鈕。",
        "from": "T45n1901_001:0902b02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急繫擡系等。",
        "from": "T45n1901_001:0902b03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫小鐵鉤。",
        "from": "T45n1901_001:0902b03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤系起時。",
        "from": "T45n1901_001:0902b03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務令平穩。",
        "from": "T45n1901_001:0902b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此並預先作了。",
        "from": "T45n1901_001:0902b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得臨時求覓。",
        "from": "T45n1901_001:0902b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以小羅。",
        "from": "T45n1901_001:0902b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆蟲罐內。",
        "from": "T45n1901_001:0902b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徐徐放下。",
        "from": "T45n1901_001:0902b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至水縱鉤。",
        "from": "T45n1901_001:0902b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔繩令覆。",
        "from": "T45n1901_001:0902b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再三下濯。",
        "from": "T45n1901_001:0902b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方牽出井。",
        "from": "T45n1901_001:0902b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是乞食之儀也。",
        "from": "T45n1901_001:0902b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用銅椀漆椀。",
        "from": "T45n1901_001:0902b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿孔著系。",
        "from": "T45n1901_001:0902b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權用亦得。",
        "from": "T45n1901_001:0902b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在寺者。",
        "from": "T45n1901_001:0902b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以常用鐵罐覆之。",
        "from": "T45n1901_001:0902b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前安置。",
        "from": "T45n1901_001:0902b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少有別處。",
        "from": "T45n1901_001:0902b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底傍著鐵鐶。",
        "from": "T45n1901_001:0902b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可容三指。",
        "from": "T45n1901_001:0902b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以罐鉤內中。",
        "from": "T45n1901_001:0902b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擡起系等同前著鉤。",
        "from": "T45n1901_001:0902b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆蟲在中。",
        "from": "T45n1901_001:0902b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放使至水。",
        "from": "T45n1901_001:0902b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假令深井亦得為之。",
        "from": "T45n1901_001:0902b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若別畜繩。",
        "from": "T45n1901_001:0902b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐成勞擾。",
        "from": "T45n1901_001:0902b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若井深處。",
        "from": "T45n1901_001:0902b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或可別為盆貯。",
        "from": "T45n1901_001:0902b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或可送往河池。",
        "from": "T45n1901_001:0902b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瀉水竟時。",
        "from": "T45n1901_001:0902b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還須滌器。",
        "from": "T45n1901_001:0902b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯其法也。",
        "from": "T45n1901_001:0902b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濾羅樣式。",
        "from": "T45n1901_001:0902b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如別處言之。",
        "from": "T45n1901_001:0902b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈容井口之上翻羅。",
        "from": "T45n1901_001:0902b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元無放生之器。",
        "from": "T45n1901_001:0902b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲似護戒。",
        "from": "T45n1901_001:0902b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧顧蟲亡。",
        "from": "T45n1901_001:0902b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以如來聖教。",
        "from": "T45n1901_001:0902b15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲為本。",
        "from": "T45n1901_001:0902b15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所制戒律。",
        "from": "T45n1901_001:0902b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪有性遮。",
        "from": "T45n1901_001:0902b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮則准事合經。",
        "from": "T45n1901_001:0902b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性乃理應從重。",
        "from": "T45n1901_001:0902b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性罪之內。",
        "from": "T45n1901_001:0902b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生最初。",
        "from": "T45n1901_001:0902b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故智人特宜存護。",
        "from": "T45n1901_001:0902b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若將此為輕者。",
        "from": "T45n1901_001:0902b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更復何有重哉。",
        "from": "T45n1901_001:0902b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能依教作者。",
        "from": "T45n1901_001:0902b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在得長命果報。",
        "from": "T45n1901_001:0902b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來世當生淨土。",
        "from": "T45n1901_001:0902b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且神州之地。",
        "from": "T45n1901_001:0902b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四百餘城。",
        "from": "T45n1901_001:0902b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家之人動有萬計。",
        "from": "T45n1901_001:0902b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於濾水事。",
        "from": "T45n1901_001:0902b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存心者寡。",
        "from": "T45n1901_001:0902b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習俗生常。",
        "from": "T45n1901_001:0902b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見輕佛教。",
        "from": "T45n1901_001:0902b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可一一門到口傳。",
        "from": "T45n1901_001:0902b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冀諸行人遞相教習。",
        "from": "T45n1901_001:0902b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使學通三藏。",
        "from": "T45n1901_001:0902b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐證四禪。",
        "from": "T45n1901_001:0902b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎮想無生。",
        "from": "T45n1901_001:0902b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄心空理。",
        "from": "T45n1901_001:0902b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不護命。",
        "from": "T45n1901_001:0902b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教奉持。",
        "from": "T45n1901_001:0902b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終亦不免佛所訶責。",
        "from": "T45n1901_001:0902b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十惡初罪。",
        "from": "T45n1901_001:0902b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰代受之。",
        "from": "T45n1901_001:0902b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且如見有屠兒牽羊入寺。",
        "from": "T45n1901_001:0902b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不過數口。",
        "from": "T45n1901_001:0902b25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放作長生。",
        "from": "T45n1901_001:0902b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾共聚看。",
        "from": "T45n1901_001:0902b26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指稱善。",
        "from": "T45n1901_001:0902b26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧知房內用水。",
        "from": "T45n1901_001:0902b26_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日殺千生萬生。",
        "from": "T45n1901_001:0902b26_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既知理教不輕。",
        "from": "T45n1901_001:0902b27_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜應細羅細察。",
        "from": "T45n1901_001:0902b27_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自利利物。",
        "from": "T45n1901_001:0902b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善護善思。",
        "from": "T45n1901_001:0902b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有令人耕田種植。",
        "from": "T45n1901_001:0902b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "規求小利。",
        "from": "T45n1901_001:0902b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見大尤。",
        "from": "T45n1901_001:0902b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水陸俱傷。",
        "from": "T45n1901_001:0902b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生無數。",
        "from": "T45n1901_001:0902b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯之罪咎。",
        "from": "T45n1901_001:0902b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲如之何。",
        "from": "T45n1901_001:0902c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直如束手泉門。",
        "from": "T45n1901_001:0902c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任他處分。",
        "from": "T45n1901_001:0902c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "T45n1901_001:0902c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生之人。",
        "from": "T45n1901_001:0902c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮地獄餓鬼畜生。",
        "from": "T45n1901_001:0902c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設得為人。",
        "from": "T45n1901_001:0902c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "短命多病。",
        "from": "T45n1901_001:0902c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼此苦。",
        "from": "T45n1901_001:0902c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰當受之。",
        "from": "T45n1901_001:0902c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫有能為。",
        "from": "T45n1901_001:0902c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉甚善。",
        "from": "T45n1901_001:0902c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂釋迦末法。",
        "from": "T45n1901_001:0902c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共結慈念之因。",
        "from": "T45n1901_001:0902c04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒初成。",
        "from": "T45n1901_001:0902c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱證無生之果。",
        "from": "T45n1901_001:0902c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣如別傳。",
        "from": "T45n1901_001:0902c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此不煩云。",
        "from": "T45n1901_001:0902c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護命放生軌儀法",
        "from": "T45n1901_001:0902c07_0",
        "context_with_next_sentence": false
    }
]