[
    {
        "source_sentence": "五大牛玉雨寶陀羅尼儀軌",
        "from": "X02n0201_001:0876b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛日羅枳惹曩譯",
        "from": "X02n0201_001:0876b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來在金剛頂瑜伽祕密宮殿中。",
        "from": "X02n0201_001:0876b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與微塵數諸大眾俱。",
        "from": "X02n0201_001:0876b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說微妙甚深祕密。",
        "from": "X02n0201_001:0876b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中。",
        "from": "X02n0201_001:0876b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一菩薩摩訶薩。",
        "from": "X02n0201_001:0876b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰虗空神通王。",
        "from": "X02n0201_001:0876b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起。",
        "from": "X02n0201_001:0876b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮佛足。",
        "from": "X02n0201_001:0876b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言。",
        "from": "X02n0201_001:0876b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X02n0201_001:0876b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於過去無量劫中。",
        "from": "X02n0201_001:0876b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養諸佛。",
        "from": "X02n0201_001:0876b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行最上祕密教法。",
        "from": "X02n0201_001:0876b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為五大牛玉雨寶陀羅尼。",
        "from": "X02n0201_001:0876b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則一切諸佛世尊最深祕密微妙吉祥大寶庫藏。",
        "from": "X02n0201_001:0876c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為濁世眾生等在家出家貧窮困苦薄福之類資具乏少所求願事不隨其意。",
        "from": "X02n0201_001:0876c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令滿足一切所願。",
        "from": "X02n0201_001:0876c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲說此法。",
        "from": "X02n0201_001:0876c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊哀愍聽許。",
        "from": "X02n0201_001:0876c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來讚言善哉。",
        "from": "X02n0201_001:0876c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨汝意說。",
        "from": "X02n0201_001:0876c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於往昔無數劫前。",
        "from": "X02n0201_001:0876c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在因地時。",
        "from": "X02n0201_001:0876c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發大誓願力。",
        "from": "X02n0201_001:0876c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生遍滿一切法界海中娑訶世界薄福下劣諸眾生等。",
        "from": "X02n0201_001:0876c05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願作大水牛玉銀蹄金角青瑠璃色青大勢力。",
        "from": "X02n0201_001:0876c07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍法界為諸眾生。",
        "from": "X02n0201_001:0876c08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨類應現。",
        "from": "X02n0201_001:0876c08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大饒益。",
        "from": "X02n0201_001:0876c08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝今日發弘誓願。",
        "from": "X02n0201_001:0876c08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲說此雨寶陀羅尼者。",
        "from": "X02n0201_001:0876c09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則諸佛最上祕密牛玉寶印。",
        "from": "X02n0201_001:0876c09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益群生甚深祕術。",
        "from": "X02n0201_001:0876c10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時祕大士虗空神通王菩薩。",
        "from": "X02n0201_001:0876c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙佛許可。",
        "from": "X02n0201_001:0876c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來前。",
        "from": "X02n0201_001:0876c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "X02n0201_001:0876c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我依諸佛最上乘　　祕密瑜伽名雨寶　為像末法薄福是　　佛說成就甚深法　若有眾生無福惠　　一切所欲不隨心　由此貧苦造惡業　　墮在三途無出期　依我所說祕密法　　修學雨寶陀羅尼　免脫貧窮困苦難　　圓滿心中所求願　若我弘誓大悲中　　一人不成二世願　我墮虗妄罪苦中　　不還本覺捨大悲說此偈已。",
        "from": "X02n0201_001:0876c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪法。",
        "from": "X02n0201_001:0877a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手外縛。",
        "from": "X02n0201_001:0877a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二風竪相合。",
        "from": "X02n0201_001:0877a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蹙如寶形。",
        "from": "X02n0201_001:0877a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言唵縛日羅怛羅莎呵又說根本陀羅尼金剛合掌。",
        "from": "X02n0201_001:0877a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵半怛[仁二+坒]俐邪羅惹怛羅莎呵次說五大牛玉根本心印明。",
        "from": "X02n0201_001:0877a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先法界牛玉印。",
        "from": "X02n0201_001:0877a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛外縛中指如針。",
        "from": "X02n0201_001:0877a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0877a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅[金*(离禸+ㄆ)]莎呵次金剛牛玉印明。",
        "from": "X02n0201_001:0877a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛外縛直立忍願。",
        "from": "X02n0201_001:0877a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偃仰進力。",
        "from": "X02n0201_001:0877a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如三股杵形。",
        "from": "X02n0201_001:0877a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0877a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅吽莎呵",
        "from": "X02n0201_001:0877a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次寶光牛玉印。",
        "from": "X02n0201_001:0877a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛外縛。",
        "from": "X02n0201_001:0877a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立忍願。",
        "from": "X02n0201_001:0877a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力如寶形。",
        "from": "X02n0201_001:0877a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0877a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅怛羅莎呵",
        "from": "X02n0201_001:0877a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次蓮華牛玉印明。",
        "from": "X02n0201_001:0877a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛外縛進力如蓮華形真言曰。",
        "from": "X02n0201_001:0877a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅紇哩莎呵",
        "from": "X02n0201_001:0877a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次羯磨牛玉印明。",
        "from": "X02n0201_001:0877a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛外縛立忍願面相合叉。",
        "from": "X02n0201_001:0877a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒方進力立互相叉。",
        "from": "X02n0201_001:0877a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0877a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅惡莎呵",
        "from": "X02n0201_001:0877a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說修行方法。",
        "from": "X02n0201_001:0877a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲修行此最上法。",
        "from": "X02n0201_001:0877b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業清淨。",
        "from": "X02n0201_001:0877b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親對善師。",
        "from": "X02n0201_001:0877b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受得儀軌。",
        "from": "X02n0201_001:0877b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應灌頂。",
        "from": "X02n0201_001:0877b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於山間靜處。",
        "from": "X02n0201_001:0877b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於寺舍。",
        "from": "X02n0201_001:0877b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所樂處。",
        "from": "X02n0201_001:0877b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立壇。",
        "from": "X02n0201_001:0877b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作一方壇隨其大小。",
        "from": "X02n0201_001:0877b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇面方。",
        "from": "X02n0201_001:0877b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置尊像。",
        "from": "X02n0201_001:0877b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其形像法。",
        "from": "X02n0201_001:0877b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身黃金色四臂一面。",
        "from": "X02n0201_001:0877b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴五牛玉。",
        "from": "X02n0201_001:0877b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是五佛寶冠。",
        "from": "X02n0201_001:0877b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手捧日輪。",
        "from": "X02n0201_001:0877b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手捧月輪。",
        "from": "X02n0201_001:0877b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持如意寶形當心。",
        "from": "X02n0201_001:0877b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作施無畏印。",
        "from": "X02n0201_001:0877b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少許相去。",
        "from": "X02n0201_001:0877b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當在寶形。",
        "from": "X02n0201_001:0877b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦者壇東對像念誦。",
        "from": "X02n0201_001:0877b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種時華。",
        "from": "X02n0201_001:0877b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散壇上。",
        "from": "X02n0201_001:0877b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香燈明飯食菓子。",
        "from": "X02n0201_001:0877b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力所辨。",
        "from": "X02n0201_001:0877b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為供養。",
        "from": "X02n0201_001:0877b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每入道場。",
        "from": "X02n0201_001:0877b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對尊像五體投地。",
        "from": "X02n0201_001:0877b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮一切佛及諸聖眾。",
        "from": "X02n0201_001:0877b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即懺悔隨喜勸請發願已。",
        "from": "X02n0201_001:0877b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結跏趺坐或半跏趺。",
        "from": "X02n0201_001:0877b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意而坐。",
        "from": "X02n0201_001:0877b11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端身正念。",
        "from": "X02n0201_001:0877b11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以塗香用塗兩手。",
        "from": "X02n0201_001:0877b11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗心合掌而誦淨三業真言。",
        "from": "X02n0201_001:0877b12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵舜入第耨戍(引)駄曩(引)耶莎呵次佛部心印明。",
        "from": "X02n0201_001:0877b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌真言。",
        "from": "X02n0201_001:0877b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵爾曩爾伽莎呵",
        "from": "X02n0201_001:0877b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次蓮華部心印明(金合)。",
        "from": "X02n0201_001:0877b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿嚧力迦莎呵",
        "from": "X02n0201_001:0877b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金剛部心印(金合)。",
        "from": "X02n0201_001:0877b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅地力迦莎呵",
        "from": "X02n0201_001:0877b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次被甲護身印明。",
        "from": "X02n0201_001:0877b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右各作金剛拳。",
        "from": "X02n0201_001:0877b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左拳安左腰。",
        "from": "X02n0201_001:0877b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右拳印五處。",
        "from": "X02n0201_001:0877b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍印額右肩左肩心喉。",
        "from": "X02n0201_001:0877b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0877b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵步(引)入縛(二合)羅吽",
        "from": "X02n0201_001:0877b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次召請本尊印明。",
        "from": "X02n0201_001:0877c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內縛。",
        "from": "X02n0201_001:0877c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒右風少屈如鈎形召之三遍。",
        "from": "X02n0201_001:0877c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "X02n0201_001:0877c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵[金*(离禸+ㄆ)]吽怛羅(二合)訖里(二合)惡曳醯呬莎呵次軍吒利身印明。",
        "from": "X02n0201_001:0877c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內縛。",
        "from": "X02n0201_001:0877c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪忍願頭相柱。",
        "from": "X02n0201_001:0877c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒進力以屈當忍願背不相著。",
        "from": "X02n0201_001:0877c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作三股杵形。",
        "from": "X02n0201_001:0877c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "X02n0201_001:0877c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿密哩(二合)帝吽發吒莎呵",
        "from": "X02n0201_001:0877c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻閼伽水印。",
        "from": "X02n0201_001:0877c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇上左右。",
        "from": "X02n0201_001:0877c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各置一淨器滿盛香水。",
        "from": "X02n0201_001:0877c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為閼伽。",
        "from": "X02n0201_001:0877c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初迎請時獻右邊者。",
        "from": "X02n0201_001:0877c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後奉送時獻左邊者。",
        "from": "X02n0201_001:0877c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻時二羽捧閼伽器當額。",
        "from": "X02n0201_001:0877c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦真言。",
        "from": "X02n0201_001:0877c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴本尊足。",
        "from": "X02n0201_001:0877c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0877c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅那迦吒吽",
        "from": "X02n0201_001:0877c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻華座印。",
        "from": "X02n0201_001:0877c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手虗心合掌作開敷蓮華八葉印當額。",
        "from": "X02n0201_001:0877c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰。",
        "from": "X02n0201_001:0877c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦摩羅莎呵",
        "from": "X02n0201_001:0877c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次普通供養印。",
        "from": "X02n0201_001:0877c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二雙合掌。",
        "from": "X02n0201_001:0877c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以戒方二度外縛。",
        "from": "X02n0201_001:0877c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以進力反蹙如寶形。",
        "from": "X02n0201_001:0877c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印已成。",
        "from": "X02n0201_001:0877c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "X02n0201_001:0877c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵誐誐曩三(引)婆嚩縛日羅斛",
        "from": "X02n0201_001:0877c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想從印出生無量種種供具。",
        "from": "X02n0201_001:0877c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香華燈明塗香飲食寶幢幡蓋一切寶物。",
        "from": "X02n0201_001:0877c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉供養本尊一切聖眾。",
        "from": "X02n0201_001:0877c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛合掌印。",
        "from": "X02n0201_001:0877c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦大牛玉菩薩讚歎曰。",
        "from": "X02n0201_001:0877c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛日羅(二合)羅怛曩(二合)素縛日羅(二合)羅他縛日羅(二合)迦捨摩訶摩抳阿(引)迦(引)捨蘖婆縛日羅荼縛日羅蘖婆曩謨率都帝次羯磨印左拳印當心。",
        "from": "X02n0201_001:0877c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空風相捻如寶形。",
        "from": "X02n0201_001:0878a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作施願勢。",
        "from": "X02n0201_001:0878a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想我身即同五大牛玉菩薩。",
        "from": "X02n0201_001:0878a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0878a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵[金*(离禸+ㄆ)]吽怛羅紇哩惡憾莎呵次結三昧耶印。",
        "from": "X02n0201_001:0878a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二雙外縛。",
        "from": "X02n0201_001:0878a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力反蹙如寶形。",
        "from": "X02n0201_001:0878a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智並竪置於心上。",
        "from": "X02n0201_001:0878a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "X02n0201_001:0878a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅(二合)羅怛曩吽",
        "from": "X02n0201_001:0878a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取水精念珠。",
        "from": "X02n0201_001:0878a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於掌中。",
        "from": "X02n0201_001:0878a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當心誦加持念珠真言三遍。",
        "from": "X02n0201_001:0878a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "X02n0201_001:0878a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾盧(引)石曩摩羅莎呵",
        "from": "X02n0201_001:0878a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後發願。",
        "from": "X02n0201_001:0878a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始自我身一切有情所希望事世間一切善願。",
        "from": "X02n0201_001:0878a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我念誦力速令成就。",
        "from": "X02n0201_001:0878a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而下心上念誦。",
        "from": "X02n0201_001:0878a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言。",
        "from": "X02n0201_001:0878a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七日中。",
        "from": "X02n0201_001:0878a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿三十萬遍。",
        "from": "X02n0201_001:0878a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者即現持誦者前。",
        "from": "X02n0201_001:0878a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心所求皆得成就。",
        "from": "X02n0201_001:0878a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常持誦。",
        "from": "X02n0201_001:0878a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時。",
        "from": "X02n0201_001:0878a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時別念誦一千八十遍。",
        "from": "X02n0201_001:0878a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數滿一百萬遍。",
        "from": "X02n0201_001:0878a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切求願莫不成就。",
        "from": "X02n0201_001:0878a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦分限畢。",
        "from": "X02n0201_001:0878a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴念珠祈請所求即安本處。",
        "from": "X02n0201_001:0878a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次奉送本尊印明。",
        "from": "X02n0201_001:0878a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手外縛。",
        "from": "X02n0201_001:0878a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二大指頭插華。",
        "from": "X02n0201_001:0878a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言。",
        "from": "X02n0201_001:0878a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想念本尊送本土。",
        "from": "X02n0201_001:0878a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "X02n0201_001:0878a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛日羅怛曩黎",
        "from": "X02n0201_001:0878a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次三部被甲如前。",
        "from": "X02n0201_001:0878a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依如來加持力。",
        "from": "X02n0201_001:0878a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此甚深微妙法。",
        "from": "X02n0201_001:0878a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於像末不信人。",
        "from": "X02n0201_001:0878a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不同其不莫授與。",
        "from": "X02n0201_001:0878b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先擇弟子。",
        "from": "X02n0201_001:0878b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心操人所敬。",
        "from": "X02n0201_001:0878b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有智惠。",
        "from": "X02n0201_001:0878b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修四無量樂大乘。",
        "from": "X02n0201_001:0878b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮三寶兼濟心。",
        "from": "X02n0201_001:0878b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師入壇已灌頂。",
        "from": "X02n0201_001:0878b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既蒙印可而修行。",
        "from": "X02n0201_001:0878b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自恣。",
        "from": "X02n0201_001:0878b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杖罔此深法。",
        "from": "X02n0201_001:0878b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵冥治罸。",
        "from": "X02n0201_001:0878b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝養父母不懈怠。",
        "from": "X02n0201_001:0878b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬尊重阿闍梨。",
        "from": "X02n0201_001:0878b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠心信受此大法。",
        "from": "X02n0201_001:0878b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生一念不信心。",
        "from": "X02n0201_001:0878b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳受已後專修此。",
        "from": "X02n0201_001:0878b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠心祈請所求願。",
        "from": "X02n0201_001:0878b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊哀愍垂加護。",
        "from": "X02n0201_001:0878b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉地現前令滿足。",
        "from": "X02n0201_001:0878b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有來求無厭心。",
        "from": "X02n0201_001:0878b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力所堪而施與。",
        "from": "X02n0201_001:0878b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於傳受阿闍梨耶。",
        "from": "X02n0201_001:0878b07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻珍寶。",
        "from": "X02n0201_001:0878b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惜身命。",
        "from": "X02n0201_001:0878b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有慳不行從此法。",
        "from": "X02n0201_001:0878b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉地不圓滿。",
        "from": "X02n0201_001:0878b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽忌宣傳於世間。",
        "from": "X02n0201_001:0878b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀謗罪故墮惡趣。",
        "from": "X02n0201_001:0878b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此印契祕。",
        "from": "X02n0201_001:0878b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密故。",
        "from": "X02n0201_001:0878b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根罪障悉清淨。",
        "from": "X02n0201_001:0878b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智圓滿具大行。",
        "from": "X02n0201_001:0878b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必證無上大菩提。",
        "from": "X02n0201_001:0878b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛玉雨寶陀羅尼儀軌",
        "from": "X02n0201_001:0878b13_0",
        "context_with_next_sentence": false
    }
]