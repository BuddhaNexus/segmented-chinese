[
    {
        "source_sentence": "佛說預修十王生七經",
        "from": "X01n0021_001:0408a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹啟諷閻羅王預修生七往生淨土經。",
        "from": "X01n0021_001:0408a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓勸有緣。",
        "from": "X01n0021_001:0408a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五會啟經入讚。",
        "from": "X01n0021_001:0408a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念阿彌陀佛。",
        "from": "X01n0021_001:0408a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成都府大聖慈寺沙門　藏川　述",
        "from": "X01n0021_001:0408a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說閻羅王授記四眾逆修生七往生淨土經　讚曰。",
        "from": "X01n0021_001:0408a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來臨般涅槃時　　廣召天靈及地祇　因為琰魔王授記　　乃傳生七預修儀如是我聞。",
        "from": "X01n0021_001:0408a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛。",
        "from": "X01n0021_001:0408a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在鳩尸那城。",
        "from": "X01n0021_001:0408a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿維跋提河邊。",
        "from": "X01n0021_001:0408a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅雙樹間。",
        "from": "X01n0021_001:0408a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨般涅槃時。",
        "from": "X01n0021_001:0408a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉身放光。",
        "from": "X01n0021_001:0408a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普照大眾。",
        "from": "X01n0021_001:0408a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩摩訶薩。",
        "from": "X01n0021_001:0408a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍神王。",
        "from": "X01n0021_001:0408a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天王帝釋。",
        "from": "X01n0021_001:0408a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四天大王。",
        "from": "X01n0021_001:0408a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵天王。",
        "from": "X01n0021_001:0408a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿脩羅王。",
        "from": "X01n0021_001:0408a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大國王。",
        "from": "X01n0021_001:0408a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅天子。",
        "from": "X01n0021_001:0408a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大山府君。",
        "from": "X01n0021_001:0408a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "司命司錄。",
        "from": "X01n0021_001:0408a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五道大神。",
        "from": "X01n0021_001:0408a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄官典。",
        "from": "X01n0021_001:0408a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉來集會。",
        "from": "X01n0021_001:0408a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮世尊。",
        "from": "X01n0021_001:0408a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌而立　讚曰。",
        "from": "X01n0021_001:0408a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　時佛舒光滿大千　　普臻龍鬼會人天　釋梵諸天冥密眾　　咸來稽首世尊前佛告諸大眾。",
        "from": "X01n0021_001:0408a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅天子。",
        "from": "X01n0021_001:0408a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世。",
        "from": "X01n0021_001:0408a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得作佛。",
        "from": "X01n0021_001:0408a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰普賢王如來。",
        "from": "X01n0021_001:0408a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十號具足。",
        "from": "X01n0021_001:0408a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土嚴淨。",
        "from": "X01n0021_001:0408a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百寶莊嚴。",
        "from": "X01n0021_001:0408a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國名華嚴。",
        "from": "X01n0021_001:0408a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩充滿　讚曰。",
        "from": "X01n0021_001:0408a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世尊此日記閻羅　　不久當來證佛陀　莊嚴寶國常清淨　　菩薩修行眾甚多爾時阿難白佛言。",
        "from": "X01n0021_001:0408a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X01n0021_001:0408b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅天子。",
        "from": "X01n0021_001:0408b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以何因緣。",
        "from": "X01n0021_001:0408b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處斷冥間。",
        "from": "X01n0021_001:0408b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於此會。",
        "from": "X01n0021_001:0408b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得授於當來果記。",
        "from": "X01n0021_001:0408b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "X01n0021_001:0408b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼冥途。",
        "from": "X01n0021_001:0408b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸王者。",
        "from": "X01n0021_001:0408b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二因緣。",
        "from": "X01n0021_001:0408b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一是住不思議解脫不動地菩薩。",
        "from": "X01n0021_001:0408b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲攝化極苦眾生。",
        "from": "X01n0021_001:0408b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現作彼琰魔等王。",
        "from": "X01n0021_001:0408b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二為多生習善犯戒故。",
        "from": "X01n0021_001:0408b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退落琰魔天中。",
        "from": "X01n0021_001:0408b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大魔王。",
        "from": "X01n0021_001:0408b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "管攝諸鬼。",
        "from": "X01n0021_001:0408b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "科斷閻浮提內。",
        "from": "X01n0021_001:0408b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十惡五逆。",
        "from": "X01n0021_001:0408b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪人。",
        "from": "X01n0021_001:0408b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫閇牢獄。",
        "from": "X01n0021_001:0408b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日夜受苦。",
        "from": "X01n0021_001:0408b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪轉其中。",
        "from": "X01n0021_001:0408b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨業報身。",
        "from": "X01n0021_001:0408b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定生注死。",
        "from": "X01n0021_001:0408b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此琰魔天子。",
        "from": "X01n0021_001:0408b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣已熟。",
        "from": "X01n0021_001:0408b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我記。",
        "from": "X01n0021_001:0408b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來世寶圓。",
        "from": "X01n0021_001:0408b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證大菩提。",
        "from": "X01n0021_001:0408b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等人天。",
        "from": "X01n0021_001:0408b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應疑惑　讚曰。",
        "from": "X01n0021_001:0408b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　悲增普化示威靈　　六道輪迴不暫停　教化厭苦思安樂　　故現閻羅天子形若復有人。",
        "from": "X01n0021_001:0408b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造此經。",
        "from": "X01n0021_001:0408b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦。",
        "from": "X01n0021_001:0408b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨命之後。",
        "from": "X01n0021_001:0408b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生三塗。",
        "from": "X01n0021_001:0408b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不入一切諸大地獄　讚曰。",
        "from": "X01n0021_001:0408b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人信法不思議　　書寫經文聽受持　捨命頓超三惡道　　此身長免入阿鼻在生之日。",
        "from": "X01n0021_001:0408b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺父害母。",
        "from": "X01n0021_001:0408b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破齊破戒。",
        "from": "X01n0021_001:0408b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺豬牛羊雞狗毒虵。",
        "from": "X01n0021_001:0408b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切重罪。",
        "from": "X01n0021_001:0408b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應入地獄。",
        "from": "X01n0021_001:0408b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十劫五劫。",
        "from": "X01n0021_001:0408b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若造此經。",
        "from": "X01n0021_001:0408b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸尊像。",
        "from": "X01n0021_001:0408b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記在業鏡。",
        "from": "X01n0021_001:0408b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻王歡喜。",
        "from": "X01n0021_001:0408b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "判放其人。",
        "from": "X01n0021_001:0408b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生富貴家。",
        "from": "X01n0021_001:0408b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "免其罪過　讚曰。",
        "from": "X01n0021_001:0408b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　破齊毀戒殺雞豬　　業鏡照然報不虗　若造此經兼畫像　　閻王判放罪銷除若有善男子善女人。",
        "from": "X01n0021_001:0408b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘比丘尼。",
        "from": "X01n0021_001:0408b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優婆塞優婆夷。",
        "from": "X01n0021_001:0408b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預修生七齊者。",
        "from": "X01n0021_001:0408b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每月二時。",
        "from": "X01n0021_001:0408b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養三寶。",
        "from": "X01n0021_001:0408b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈設十王。",
        "from": "X01n0021_001:0408b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修名納狀。",
        "from": "X01n0021_001:0408b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏上六曹。",
        "from": "X01n0021_001:0408c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善業童子。",
        "from": "X01n0021_001:0408c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏上天曹地府官等。",
        "from": "X01n0021_001:0408c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記在名案。",
        "from": "X01n0021_001:0408c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身到之日。",
        "from": "X01n0021_001:0408c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得配生快樂之處。",
        "from": "X01n0021_001:0408c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住中陰四十九日。",
        "from": "X01n0021_001:0408c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不待男女追救。",
        "from": "X01n0021_001:0408c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命過十王。",
        "from": "X01n0021_001:0408c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若闕一齊。",
        "from": "X01n0021_001:0408c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滯在一王。",
        "from": "X01n0021_001:0408c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留連受苦。",
        "from": "X01n0021_001:0408c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得出生。",
        "from": "X01n0021_001:0408c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遲滯一年。",
        "from": "X01n0021_001:0408c04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故勸汝。",
        "from": "X01n0021_001:0408c04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此要事。",
        "from": "X01n0021_001:0408c04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈往生報　讚曰。",
        "from": "X01n0021_001:0408c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　四眾修齊及有時　　三旬兩供是常儀　莫使闕緣功德小　　始交中陰滯冥司爾時地藏菩薩。",
        "from": "X01n0021_001:0408c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹菩薩。",
        "from": "X01n0021_001:0408c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救苦觀世音菩薩。",
        "from": "X01n0021_001:0408c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常悲菩薩。",
        "from": "X01n0021_001:0408c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼菩薩。",
        "from": "X01n0021_001:0408c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏菩薩。",
        "from": "X01n0021_001:0408c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各還從本道光中。",
        "from": "X01n0021_001:0408c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如來所。",
        "from": "X01n0021_001:0408c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異口同聲。",
        "from": "X01n0021_001:0408c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎世尊。",
        "from": "X01n0021_001:0408c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍凡夫。",
        "from": "X01n0021_001:0408c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此妙法。",
        "from": "X01n0021_001:0408c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "㧞死救生。",
        "from": "X01n0021_001:0408c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮佛足　讚曰。",
        "from": "X01n0021_001:0408c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　足膝齎胷口及眉　　六光菩薩運深悲　各各同聲咸讚歎　　勤勤化物莫生疲爾時二十八重。",
        "from": "X01n0021_001:0408c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切獄主。",
        "from": "X01n0021_001:0408c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅天子。",
        "from": "X01n0021_001:0408c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道冥官。",
        "from": "X01n0021_001:0408c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮拜發願。",
        "from": "X01n0021_001:0408c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有四眾。",
        "from": "X01n0021_001:0408c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘比丘尼。",
        "from": "X01n0021_001:0408c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優婆塞優婆夷。",
        "from": "X01n0021_001:0408c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若造此經。",
        "from": "X01n0021_001:0408c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦一偈。",
        "from": "X01n0021_001:0408c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當免其一切苦楚。",
        "from": "X01n0021_001:0408c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "送出地獄。",
        "from": "X01n0021_001:0408c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住生天道。",
        "from": "X01n0021_001:0408c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令稽滯。",
        "from": "X01n0021_001:0408c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隔宿受苦　讚曰。",
        "from": "X01n0021_001:0408c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　冥官注記及閻王　　諸佛弘經禮讚揚　四眾有能持一偈　　我皆送出往天堂爾時閻羅天子。",
        "from": "X01n0021_001:0408c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說偈白佛。",
        "from": "X01n0021_001:0408c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無阿羅訶。",
        "from": "X01n0021_001:0408c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生苦業多。",
        "from": "X01n0021_001:0408c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪迴無定相。",
        "from": "X01n0021_001:0408c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如水上波　讚曰。",
        "from": "X01n0021_001:0408c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　閻王白佛說伽他　　愍念眾生罪苦多　六道輪迴無定相　　生滅還同水上波願得智慧風。",
        "from": "X01n0021_001:0408c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飄墮法輪河。",
        "from": "X01n0021_001:0409a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明照世界。",
        "from": "X01n0021_001:0409a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巡歷悉經過。",
        "from": "X01n0021_001:0409a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普救眾生苦。",
        "from": "X01n0021_001:0409a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏攝諸魔。",
        "from": "X01n0021_001:0409a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四王行國界。",
        "from": "X01n0021_001:0409a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳佛修多羅　讚曰。",
        "from": "X01n0021_001:0409a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願佛興揚智慧風　　飄歸法海洗塵朦　護世四王同發願　　常傳經典廣流通凡夫修善小。",
        "from": "X01n0021_001:0409a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒信邪多。",
        "from": "X01n0021_001:0409a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持經免地獄。",
        "from": "X01n0021_001:0409a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫免灾痾。",
        "from": "X01n0021_001:0409a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超度三界難。",
        "from": "X01n0021_001:0409a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不見藥叉。",
        "from": "X01n0021_001:0409a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生處登高位。",
        "from": "X01n0021_001:0409a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴壽延遐　讚曰。",
        "from": "X01n0021_001:0409a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惡業凡夫善力微　　信邪倒見入阿鼻　欲求富樂家長命　　書寫經文聽受持至心誦此經。",
        "from": "X01n0021_001:0409a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天王恒記錄。",
        "from": "X01n0021_001:0409a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得無罪咎。",
        "from": "X01n0021_001:0409a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫殺祀神靈。",
        "from": "X01n0021_001:0409a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為此入地獄。",
        "from": "X01n0021_001:0409a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛禮真經。",
        "from": "X01n0021_001:0409a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當自誡勗。",
        "from": "X01n0021_001:0409a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執金剛刀。",
        "from": "X01n0021_001:0409a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷除魔種族　讚曰。",
        "from": "X01n0021_001:0409a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　罪苦三塗業易成　　都緣殺命祭神明　願執金剛真慧劒　　斬除魔族悟無生佛行平等心。",
        "from": "X01n0021_001:0409a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生不具足。",
        "from": "X01n0021_001:0409a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修福似微塵。",
        "from": "X01n0021_001:0409a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造罪如山嶽。",
        "from": "X01n0021_001:0409a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得命延長。",
        "from": "X01n0021_001:0409a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當修造此經。",
        "from": "X01n0021_001:0409a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除地獄苦。",
        "from": "X01n0021_001:0409a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往生豪貴家。",
        "from": "X01n0021_001:0409a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善神恒守護　讚曰。",
        "from": "X01n0021_001:0409a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　罪如山嶽等恒沙　　福小微塵數未多　猶得善神常守護　　往生豪富信心家造經讀誦人。",
        "from": "X01n0021_001:0409a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽爾謝報齡。",
        "from": "X01n0021_001:0409a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天王恒引接。",
        "from": "X01n0021_001:0409a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩捧花迎。",
        "from": "X01n0021_001:0409a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心往淨土。",
        "from": "X01n0021_001:0409a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八百億千生。",
        "from": "X01n0021_001:0409a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行滿證入。",
        "from": "X01n0021_001:0409a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三昧城　讚曰。",
        "from": "X01n0021_001:0409a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人奉佛造持經　　菩薩臨終自往迎　淨國修行圓滿已　　當來正覺入金城爾時佛告阿難。",
        "from": "X01n0021_001:0409a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切龍神八部。",
        "from": "X01n0021_001:0409b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸大臣。",
        "from": "X01n0021_001:0409b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅天子。",
        "from": "X01n0021_001:0409b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大山府君。",
        "from": "X01n0021_001:0409b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "司命司錄。",
        "from": "X01n0021_001:0409b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五道大神。",
        "from": "X01n0021_001:0409b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄官等。",
        "from": "X01n0021_001:0409b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道天王。",
        "from": "X01n0021_001:0409b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當起慈悲。",
        "from": "X01n0021_001:0409b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法勿有慢。",
        "from": "X01n0021_001:0409b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可容一切罪人。",
        "from": "X01n0021_001:0409b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈孝男女。",
        "from": "X01n0021_001:0409b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修齋造福。",
        "from": "X01n0021_001:0409b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薦拔亡人。",
        "from": "X01n0021_001:0409b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報生養之恩。",
        "from": "X01n0021_001:0409b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七七修齋造像。",
        "from": "X01n0021_001:0409b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以報父母。",
        "from": "X01n0021_001:0409b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得生天　讚曰。",
        "from": "X01n0021_001:0409b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛告閻羅諸大神　　眾生罪業具難陳　應為報恩客造福　　教蒙離苦出迷津閻羅法王。",
        "from": "X01n0021_001:0409b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言。",
        "from": "X01n0021_001:0409b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "X01n0021_001:0409b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等諸王。",
        "from": "X01n0021_001:0409b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當發使乘黑馬。",
        "from": "X01n0021_001:0409b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "把黑幡。",
        "from": "X01n0021_001:0409b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著黑衣。",
        "from": "X01n0021_001:0409b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撿亡人家。",
        "from": "X01n0021_001:0409b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造何功德。",
        "from": "X01n0021_001:0409b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准名放牒。",
        "from": "X01n0021_001:0409b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抽出罪人。",
        "from": "X01n0021_001:0409b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不違誓願　讚曰。",
        "from": "X01n0021_001:0409b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸王遣使撿亡人　　男女修何功德因　依名放出三塗獄　　免歷冥間遭苦辛第一七日過秦廣王　讚曰。",
        "from": "X01n0021_001:0409b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一七亡人中陰身　　驅將隊隊數如塵　且向初王齊檢點　　由來未渡奈河津第二七日過初江王　讚曰。",
        "from": "X01n0021_001:0409b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二七亡人渡奈河　　千羣萬隊涉江波　引路牛頭肩挾棒　　催行鬼卒手擎叉第三七日過宋帝王　讚曰。",
        "from": "X01n0021_001:0409b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亡人三七轉恓惶　　始覺冥途險路長　各各點名知所在　　羣羣驅送五官王第四七日過五官王　讚曰。",
        "from": "X01n0021_001:0409b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　五官業秤向空懸　　左右雙童業簿全　輕重豈由情所願　　低昂自任昔因緣第五七日過閻羅王　讚曰。",
        "from": "X01n0021_001:0409b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　五七閻王息諍聲　　罪人心恨未甘情　策髮仰頭看業鏡　　始知先世事分明第六七日過變成王　讚曰。",
        "from": "X01n0021_001:0409c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亡人六七滯冥途　　切迫坐人執意愚　日日只看功德力　　天堂地獄在須臾第七七日過大山王　讚曰。",
        "from": "X01n0021_001:0409c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　七七冥途中陰身　　專求父母會情親　福業此時仍未定　　更看男女造何因第八百日過平等王　讚曰。",
        "from": "X01n0021_001:0409c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亡人百日更恓惶　　身遭枷械被鞭傷　男女努力造功德　　從慈妙善見天堂第九一年過都市王　讚曰。",
        "from": "X01n0021_001:0409c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一年過此轉苦辛　　男女修齋福業因　六道輪廻仍未定　　造經造佛出迷津第十至三年過五道轉輪王　讚曰。",
        "from": "X01n0021_001:0409c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後三所歷是開津　　好惡唯憑福業因　不善尚憂千日內　　胎生產死夭亡身十齋具足。",
        "from": "X01n0021_001:0409c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "免十惡罪。",
        "from": "X01n0021_001:0409c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放其生天　讚曰。",
        "from": "X01n0021_001:0409c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一身六道苦茫茫　　十惡三塗不易當　努力修齋功德具　　恒沙諸罪自銷亡我常使四藥叉王。",
        "from": "X01n0021_001:0409c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守護此經。",
        "from": "X01n0021_001:0409c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令陷沒　讚曰。",
        "from": "X01n0021_001:0409c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　閻王奉法願弘揚　　普告人天眾道場　我使藥叉齊守護　　不令隱沒永流行稽首世尊。",
        "from": "X01n0021_001:0409c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獄中罪人。",
        "from": "X01n0021_001:0410a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多是用三寶財物。",
        "from": "X01n0021_001:0410a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喧閙受罪。",
        "from": "X01n0021_001:0410a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識信之人。",
        "from": "X01n0021_001:0410a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可自誡慎。",
        "from": "X01n0021_001:0410a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿犯三寶。",
        "from": "X01n0021_001:0410a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業報難容。",
        "from": "X01n0021_001:0410a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見此經者。",
        "from": "X01n0021_001:0410a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當修學　讚曰。",
        "from": "X01n0021_001:0410a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　欲求安樂住人天　　必莫侵凌三寶錢　一落冥間諸地獄　　喧喧受苦不知年爾時琰魔法王。",
        "from": "X01n0021_001:0410a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踊躍。",
        "from": "X01n0021_001:0410a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮佛足。",
        "from": "X01n0021_001:0410a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退坐一面。",
        "from": "X01n0021_001:0410a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "X01n0021_001:0410a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經名為閻羅王。",
        "from": "X01n0021_001:0410a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授記四眾。",
        "from": "X01n0021_001:0410a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預修生七往生淨土經。",
        "from": "X01n0021_001:0410a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當流傳國界。",
        "from": "X01n0021_001:0410a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教奉行　讚曰。",
        "from": "X01n0021_001:0410a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　閻王退坐一心聽　　佛更慇懃囑此經　名曰預修生七教　　汝兼四眾廣傳行佛說閻羅王授記四眾。",
        "from": "X01n0021_001:0410a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預修生七往生淨土經。",
        "from": "X01n0021_001:0410a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普勸有緣。",
        "from": "X01n0021_001:0410a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "預修功德。",
        "from": "X01n0021_001:0410a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心歸佛。",
        "from": "X01n0021_001:0410a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願息輪廻　讚二首　第一首。",
        "from": "X01n0021_001:0410a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一身危脆似風燈　　二鼠侵欺嚙井藤　苦海不修橋筏度　　欲憑何物得超昇第二歸佛修心　讚曰。",
        "from": "X01n0021_001:0410a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　船橋不造此人癡　　遭險恓惶君始知　若悟百年彈指過　　修齋聽法莫教遲佛說預修十王生七經權衡現迹。",
        "from": "X01n0021_001:0410a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓度群類。",
        "from": "X01n0021_001:0410a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應機大聖。",
        "from": "X01n0021_001:0410a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑑衡慈王。",
        "from": "X01n0021_001:0410a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓盡迷倫。",
        "from": "X01n0021_001:0410a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃證菩提。",
        "from": "X01n0021_001:0410a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深弘願。",
        "from": "X01n0021_001:0410a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天矣盡矣。",
        "from": "X01n0021_001:0410a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡人現棲於幽冥。",
        "from": "X01n0021_001:0410a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則真身定降於苦類。",
        "from": "X01n0021_001:0410a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極濟沉倫。",
        "from": "X01n0021_001:0410a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔苦與樂。",
        "from": "X01n0021_001:0410a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫為及也。",
        "from": "X01n0021_001:0410a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人某廣勸緇素。",
        "from": "X01n0021_001:0410b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬成供養儀典。",
        "from": "X01n0021_001:0410b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粧[米*黃]披閱。",
        "from": "X01n0021_001:0410b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願蒙冥祐。",
        "from": "X01n0021_001:0410b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現增福壽。",
        "from": "X01n0021_001:0410b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷代幽魂超登樂。",
        "from": "X01n0021_001:0410b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉祝國祚靈長。",
        "from": "X01n0021_001:0410b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民遊富城。",
        "from": "X01n0021_001:0410b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何幸如斯。",
        "from": "X01n0021_001:0410b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成化五年六月　日誌",
        "from": "X01n0021_001:0410b04_0",
        "context_with_next_sentence": false
    }
]