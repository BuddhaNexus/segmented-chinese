[
    {
        "source_sentence": "金剛頂一切如來真實攝大乘",
        "from": "T18n0874_001:0310a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現證大教王經卷上",
        "from": "T18n0874_001:0310a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐特進試鴻臚卿三藏",
        "from": "T18n0874_001:0310a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門不空奉　詔譯",
        "from": "T18n0874_001:0310a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深妙祕密金剛界大三昧耶修習",
        "from": "T18n0874_001:0310a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑜伽儀第一",
        "from": "T18n0874_001:0310a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　稽首薄伽梵　　大毘盧遮那",
        "from": "T18n0874_001:0310a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能為自在王　　演說金剛界",
        "from": "T18n0874_001:0310a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無邊功德法　　成五解脫輪",
        "from": "T18n0874_001:0310a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　三十七智身　　我今歸命禮",
        "from": "T18n0874_001:0310a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　瑜伽大教王　　開演一佛乘",
        "from": "T18n0874_001:0310a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來三密藏　　是乘無比喻",
        "from": "T18n0874_001:0310a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　最上最第一　　唯佛不共智",
        "from": "T18n0874_001:0310b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　相應成佛門　　為令悟入者",
        "from": "T18n0874_001:0310b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　圓成淨法身　　三世薄伽梵",
        "from": "T18n0874_001:0310b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　皆依此法成　　是故諸如來",
        "from": "T18n0874_001:0310b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　敬禮如理法　　若修此法者",
        "from": "T18n0874_001:0310b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善住於師位　　備族姓相好",
        "from": "T18n0874_001:0310b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　調柔心正直　　以戒常嚴身",
        "from": "T18n0874_001:0310b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以戒常嚴身　　清淨無所畏",
        "from": "T18n0874_001:0310b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於此祕密乘　　決定深信解",
        "from": "T18n0874_001:0310b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　空有性相義　　隨化道應知",
        "from": "T18n0874_001:0310b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　住大悲方便　　引接諸群品",
        "from": "T18n0874_001:0310b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能令所依者　　頓獲如來位",
        "from": "T18n0874_001:0310b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　已入金剛界　　諸佛大壇場",
        "from": "T18n0874_001:0310b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生在如來家　　受法王灌頂",
        "from": "T18n0874_001:0310b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　瞻禮於聖會　　不捨菩提心",
        "from": "T18n0874_001:0310b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　恭敬阿闍黎　　等同一切佛",
        "from": "T18n0874_001:0310b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所有言教誨　　皆當盡奉行",
        "from": "T18n0874_001:0310b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於諸同學處　　不生嫌恨心",
        "from": "T18n0874_001:0310b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　敬如金剛手　　乃至諸含識",
        "from": "T18n0874_001:0310b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦不應輕惱　　諸天神仙等",
        "from": "T18n0874_001:0310b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　皆不應禮事　　勿應毀陵蔑",
        "from": "T18n0874_001:0310b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所覩諸法具　　不應故騎騫",
        "from": "T18n0874_001:0310b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為此大場內　　諸聖所執持",
        "from": "T18n0874_001:0310b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　親從阿闍黎　　得傳教灌頂",
        "from": "T18n0874_001:0310b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　明解三摩耶　　諸正遍知道",
        "from": "T18n0874_001:0310b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　通明廣略教　　瑜伽身語心",
        "from": "T18n0874_001:0310b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　妙解曼拏囉　　了真言實義",
        "from": "T18n0874_001:0310b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是阿闍黎　　諸佛所稱讚",
        "from": "T18n0874_001:0310b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　等同薄伽梵　　大毘盧遮那",
        "from": "T18n0874_001:0310b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　即是諸如來　　金剛蓮華手",
        "from": "T18n0874_001:0310c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　虛空巧業尊　　故應堅守護",
        "from": "T18n0874_001:0310c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　本尊三昧耶　　倍過於身命",
        "from": "T18n0874_001:0310c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常修外儀式　　洗漱嚼齒木",
        "from": "T18n0874_001:0310c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　噉荳蔻塗香　　令身口香潔",
        "from": "T18n0874_001:0310c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不應食薰雜　　酒肉諸殘觸",
        "from": "T18n0874_001:0310c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　飲食離諸過　　不應與他人",
        "from": "T18n0874_001:0310c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　同床鋪座臥　　常潔身淨服",
        "from": "T18n0874_001:0310c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　令內外無垢　　不應常爪甲",
        "from": "T18n0874_001:0310c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　居穢違教故　　內所為六根",
        "from": "T18n0874_001:0310c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　用三密淨除　　外謂諸儀則",
        "from": "T18n0874_001:0310c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法香水灌頂　　或外緣不備",
        "from": "T18n0874_001:0310c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　即以法淨除　　此理趣最勝",
        "from": "T18n0874_001:0310c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當觀念囕字　　淨除內外垢",
        "from": "T18n0874_001:0310c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不沐而成浴　　盪滌等虛空",
        "from": "T18n0874_001:0310c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無垢如法界　　事理俱相應",
        "from": "T18n0874_001:0310c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來最稱讚　　初起金剛定",
        "from": "T18n0874_001:0310c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　普覺諸群品　　行即如來行",
        "from": "T18n0874_001:0310c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　坐即如來坐　　諸入無言說",
        "from": "T18n0874_001:0310c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一音遍法界　　後與大悲念",
        "from": "T18n0874_001:0310c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　利樂盡無餘　　有情器世間",
        "from": "T18n0874_001:0310c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　嚴淨如來土　　若自他建立",
        "from": "T18n0874_001:0310c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　勝大曼拏囉　　選地結壇場",
        "from": "T18n0874_001:0310c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如經之所說　　上施妙天蓋",
        "from": "T18n0874_001:0310c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　周匝悉懸旛　　瑜鬘鈴珮等",
        "from": "T18n0874_001:0310c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　間錯垂供養　　布散諸尊位",
        "from": "T18n0874_001:0310c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　散時華莊嚴　　賢妃閼伽水",
        "from": "T18n0874_001:0310c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　燒香華塗香　　燈明及飲食",
        "from": "T18n0874_001:0310c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　金銀寶器盛　　及以淨梵等",
        "from": "T18n0874_001:0310c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　真言香水灑　　復以燒香熏",
        "from": "T18n0874_001:0311a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　陳設壇四邊　　諦心為供養",
        "from": "T18n0874_001:0311a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　修行瑜伽者　　每入曼拏囉",
        "from": "T18n0874_001:0311a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　觀身如普賢　　足步蹈蓮華",
        "from": "T18n0874_001:0311a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　趣於精室門　　閉戶稱吽字",
        "from": "T18n0874_001:0311a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　怒目除不祥　　即五體投地",
        "from": "T18n0874_001:0311a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　敬禮世尊足　　及一乘法僧",
        "from": "T18n0874_001:0311a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　即長跪合掌　　運心對聖眾",
        "from": "T18n0874_001:0311a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　勸請願迴向　　具法者應入",
        "from": "T18n0874_001:0311a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　金剛三摩地　　 字發智火",
        "from": "T18n0874_001:0311a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　燒除虛妄因　　情器等虛空",
        "from": "T18n0874_001:0311a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　名如理作意　　心如理成就",
        "from": "T18n0874_001:0311a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是名為法性　　法安住法位",
        "from": "T18n0874_001:0311a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是名為法界　　復加身口心",
        "from": "T18n0874_001:0311a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　成三密三身　　真言行菩薩",
        "from": "T18n0874_001:0311a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　應當善修習　　塗香遍塗手",
        "from": "T18n0874_001:0311a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　復用燒香熏　　結淨器世間",
        "from": "T18n0874_001:0311a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寂光華藏印　　即以定慧手",
        "from": "T18n0874_001:0311a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　觀念離塵法　　真言如是稱",
        "from": "T18n0874_001:0311a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)囉儒波誐怛薩嚩達摩(引)　次當淨三業　　觀身本清淨　誦此真言明　　得三業皆淨淨身真言曰。",
        "from": "T18n0874_001:0311a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩(二合)婆嚩秫駄薩嚩達摩薩嚩(二合)婆嚩秫度憾　由此真言故　　其身成法器　於虛空觀佛　　遍滿如胡麻　則誦遍照明　　歷然見諸佛觀佛真言曰。",
        "from": "T18n0874_001:0311a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欠嚩日囉(二合)馱覩",
        "from": "T18n0874_001:0311b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　警覺諸如來　　檀慧相鉤竪",
        "from": "T18n0874_001:0311b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　進力二相拄　　是名為起印",
        "from": "T18n0874_001:0311b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)底瑟姹(二合)吽　吽字想於心　　變成五智杵　應想遍身中　　所有微塵數　為金剛薩埵　　金剛掌舒臂　全身委地禮　　捨身遍法界　奉獻阿閦尊　　盡禮事諸佛真言曰。",
        "from": "T18n0874_001:0311b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐哆一布[口*祖]播(引)薩他(二合)曩野怛摩(二合)喃(二)禰哩也(二合)哆野弭(三)薩嚩怛他(引)誐哆(四)嚩日囉(二合)薩怛嚩(二合)(五)地瑟姹(二合)娑嚩(二合)[牟*含](六)吽(七)　次想怛[口*洛]字　　於額金剛寶　想身為寶形　　身中微塵數　想成金剛藏　　全身以額禮　金剛掌於心　　奉獻寶生尊　想於無邊剎　　首持五佛冠　灌一切佛頂真言曰。",
        "from": "T18n0874_001:0311b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐哆(一)布惹鼻曬迦野怛摩(三合)喃(二)禰哩也(二合)哆野弭(三)薩嚩怛他誐哆(四)嚩日囉(二合)囉怛那(二合)(五)鼻曬左娑嚩(二合)[牟*含]怛[口*洛](六)　 觀紇哩字於口　　即想八葉蓮　觀身為蓮華　　身中微塵數　想成金剛法　　全身以口禮　金剛掌於頂　　奉獻無量壽　遍想諸佛會　　而請轉法輪真言曰。",
        "from": "T18n0874_001:0311b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐哆(一)布惹鉢囉(二合)嚩哆曩野怛摩(二合)喃(二)禰哩也(二合)哆野弭(三)薩嚩怛他誐哆(四)嚩日囉(二合)達磨(五)鉢囉(二合)嚩哩哆(二合)野娑嚩(二合)[牟*含](六)紇哩以(三合七)　 阿字想於頂　　變為業金剛　觀身普金剛　　身中微塵數　皆成金剛業　　全身以頂禮　當心金剛掌　　奉獻不空尊　想於普集會　　觀金剛業身　而作大供養真言曰。",
        "from": "T18n0874_001:0311c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐哆(一)布惹迦磨抳阿怛摩(二合)喃(二)禰哩也(二合)哆野弭(三)薩嚩怛他誐哆(四)嚩日囉(二合)迦磨(五)俱嚕娑嚩(二合)[羊*含](六)阿(入聲七)　次結金剛持大印　　禪慧檀智反相叉　右膝著地置頂上　　一一想禮如來足　舒指從頂如垂帶　　從心旋轉如舞勢　金剛合掌置頂上真言曰。",
        "from": "T18n0874_001:0311c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐哆(一)迦野弭嚩枳唧哆(二)嚩日囉(二合)鉢囉(二合)拏每(三)嚩日囉(二合)滿娜喃迦嚕彌(四)唵(引)嚩日囉(二合)吻(尾一切五)　歸命十方等正覺　　最勝妙法菩薩眾　以身口意清淨業　　殷勤合掌恭敬禮　無始輪迴諸有中　　身口意業所生罪　如佛菩薩所懺悔　　我今陳懺亦如是　諸佛菩薩行願中　　金剛三業所生福　緣覺聲聞及有情　　所集善根盡隨喜　一切世燈坐道場　　覺眼開敷照三有　我今胡跪先勸請　　轉於無上妙法輪　所有如來三界主　　臨般無餘涅槃者　我皆勸請令久住　　不捨悲願救世間　懺悔勸請隨喜福　　願我不失菩提心　諸佛菩薩妙眾中　　常為善友不厭捨　離於八難生無難　　宿命住智相嚴身　遠離愚迷具悲智　　悉能滿足波羅蜜　富樂豐饒生勝族　　眷屬廣多常熾盛　四無礙辯十自在　　六通諸禪悉圓滿　如金剛幢及普賢　　願讚迴向亦如是　行者廣大願　　次應發勝心　願一切有情　　如來所稱讚　世間出世間　　速成勝悉地合掌真言曰。",
        "from": "T18n0874_001:0311c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐哆(一)商悉哆(入聲)薩嚩薩怛嚩(二合)喃(二)薩嚩悉馱藥(三)三播儞演(二合)耽(引)怛他誐哆(引)(四)室左(二合)地底瑟姹(二合)耽(去聲引)(五)　 摩 吒於兩目　　應觀為日月　二手金剛拳　　各安於腰側　遍視空中佛　　諸佛皆歡喜　所有香華等　　及餘供養具　因此目瞻覩　　去垢成清淨　辟除成結界真言曰。",
        "from": "T18n0874_001:0312a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)涅哩(二合)瑟致(二合)麼吒　福智二羽合　　十度初分交　名為金剛掌　　一切印之首真言曰。",
        "from": "T18n0874_001:0312a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)惹禮(引)　即彼金剛掌　　十度結為拳　名為金剛縛　　能解結使縛真言曰。",
        "from": "T18n0874_001:0312b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)滿馱(引)　即以金剛縛　　能淨第八識　亦除雜染種　　 怛囉(二合) 吒二字　想安於兩乳　　二羽金剛縛　掣開如戶樞真言曰。",
        "from": "T18n0874_001:0312b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)滿馱怛囉(二合)吒(引)　即以金剛縛　　禪智屈入掌　檀慧戒方間　　想召無漏智　入於藏識中真言曰。",
        "from": "T18n0874_001:0312b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)吠捨噁(引)　即以前印相　　進力拄禪智　以附於心門　　無漏智堅固真言曰。",
        "from": "T18n0874_001:0312b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)母瑟致(二合)鑁　二羽金剛縛　　忍願竪如針　纔誦真言已　　自身成普賢　坐於月輪上　　身前觀普賢真言曰。",
        "from": "T18n0874_001:0312b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)三摩野薩怛鑁(三合引)",
        "from": "T18n0874_001:0312b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　行者次應結　　大誓真實契",
        "from": "T18n0874_001:0312b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二羽金剛縛　　檀慧禪智竪",
        "from": "T18n0874_001:0312b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　忍願交入掌　　指面令相合",
        "from": "T18n0874_001:0312b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以二度刺心　　名為大悲箭",
        "from": "T18n0874_001:0312c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以射厭離心　　極喜三昧耶",
        "from": "T18n0874_001:0312c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　警覺本誓願",
        "from": "T18n0874_001:0312c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0874_001:0312c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)三摩野斛(二合)素怛囉薩怛鑁(三合引)　行者次應結　　降三世大印　二羽忿怒拳　　檀慧背鉤結　進力二背竪　　身想忿怒王　八臂而四面　　笑怒恐怖形　四牙熾盛身　　右足笪左直　蹹大天及后　　厲聲誦真言　旋轉於十方　　左轉為辟除　右旋成結界真言曰。",
        "from": "T18n0874_001:0312c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)遜婆[寧*頁]遜婆[寧*頁]吽(一)屹哩(二合)賀拏(二合)屹哩(二合)賀拏(二合)吽(二)屹哩(二合)賀拏(二合)播野吽(三)阿曩野斛婆誐鑁(四)嚩日囉(二合)吽(五)發吒(引)(六)　次結金剛蓮　　二羽金剛縛　檀慧禪智竪　　蓮華三昧耶　得成蓮華部　　轉輪之主宰真言曰。",
        "from": "T18n0874_001:0312c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)鉢納摩(二合)三摩野薩怛鑁(三合引)　阿賴耶識中　　違背菩提種　次結法輪印　　摧破厭離輪　即前蓮華印　　檀慧而交竪　摧制於自心　　即滅二乘種真言曰。",
        "from": "T18n0874_001:0312c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽(一)吒(引)枳(重聲)娑普(二合)吒(引)野(二)摩賀尾囉誐(三)嚩日囕(二合)嚩日囉(二合)馱囉(四)薩帝曳(五二合)囊[口*圻](勅角切)　次結大欲印　　二羽金剛縛　禪入智虎口　　隨誦而出入真言曰。",
        "from": "T18n0874_001:0313a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)素囉哆(一)嚩日囕(二合)[口*弱]吽鑁斛(二)薩摩野薩怛鑁(二合三引)　大樂不空身　　印契同於上　普願諸有情　　速證如來地　修行瑜伽者　　自成大深智　菩提大欲滿　　圓成大悲種真言曰。",
        "from": "T18n0874_001:0313a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)摩賀素佉(一)嚩日囕(二合)娑(引)馱野(二)薩嚩薩怛吠(二合)(三)毘喻(二合)[口*弱]吽鑁(引)斛(四)　次結召罪印　　二羽金剛縛　忍願伸如針　　進力屈如鉤　起大悲愍心　　來去而觀想　召諸有情罪　　自身三惡趣　眾罪召入掌　　黑色如雲霧　眾多諸鬼形真言曰。",
        "from": "T18n0874_001:0313a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩播波(一)迦[口*栗]灑(二合)拏(二)尾戍馱曩(三)嚩日囉(三合)薩怛嚩(二合)(四)三摩野(五)吽(六)[口*弱](引)(七)　次結摧罪印　　八度內相叉　忍願如前竪　　應觀獨鈷杵　當觀自身相　　變成降三世　厲聲誦真言　　內心起慈悲　忍願應三拍　　摧諸有情罪　三惡皆辟除真言曰。",
        "from": "T18n0874_001:0313a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)播抳(一)尾娑普(二合)吒(引)野(二)薩嚩播野滿馱曩[寧*頁](三)鉢囉(二合)謨訖囇(二合)野(四)薩嚩播波誐底毘藥(二合)(五)薩嚩薩怛嚩(二合)(六)薩嚩怛他誐哆(七)嚩日囉(二合)三摩野吽(八)怛囉(二合)吒(引)(九)　次應淨業障　　令滅決定業　二羽金剛掌　　進力屈二節　禪智押二度　　結此業障除真言曰。",
        "from": "T18n0874_001:0313b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)羯囉摩(二合)(一)尾戍馱野(二)薩嚩嚩囉拏[寧*頁](三)沒馱薩帝曳(二合)曩(四)三摩野(五)吽(六)　次成菩提心　　自他令圓滿　即如蓮華契　　檀慧禪智竪　安於頂之左真言曰。",
        "from": "T18n0874_001:0313b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)贊捺嚕(二合)多[口*梨](一)三滿哆婆捺囉(二合)枳囉尾(尼皆切二)摩賀嚩日哩(二合)抳(尼盈切三)吽(四)　運心諸有情　　月上如來威　速成如普賢　　瑜伽經所說　應結跏趺坐　　支節不動搖　應結等印持　　二羽金剛縛　仰安於臍下　　端身勿動搖　舌拄於上腭　　止息令微細　諦觀諸法性　　皆由於自心　煩惱隨煩惱　　蘊界諸處等　皆如幻與焰　　如乾闥婆城　亦如旋火輪　　又如空谷響　如是諦觀已　　不見於身心　住寂滅平等　　究竟真實智　即觀於空中　　諸佛如胡麻　遍滿虛空界　　想身證十地　住於如實際　　空中諸如來　彈指而警覺　　告言善男子　汝之所證處　　是一道清淨　金剛喻三昧　　及薩般若等　尚未能證知　　勿以此為足　應滿足普賢　　方成最正覺　身心不動搖　　定中禮諸佛真言曰。",
        "from": "T18n0874_001:0313b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐哆(一)波娜滿那喃迦嚕弭　行者聞警覺　　定中普禮已　唯願諸如來　　示我所行處　諸佛同告言　　汝應觀自心　既聞是說已　　如教觀自心　久住諦觀察　　不見自心相　復想禮佛足　　白言最勝尊　我不見自心　　此心為何相　諸佛咸告言　　心相難測量　授與心真言　　即誦徹心明　觀心如月輪　　若在輕霧中　如理諦觀察真言曰。",
        "from": "T18n0874_001:0313c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)唧哆鉢囉(二合)底(一)味淡迦嚕弭(二)　藏識本非染　　清淨無瑕穢　長時積福智　　喻若淨月輪　無體亦無事　　即說亦非月　由具福智故　　自心如滿月　踊躍心歡喜　　復白諸世尊　我已見自心　　清淨如滿月　離諸煩惱垢　　能執所執等　諸佛皆告言　　汝心本如是　為客塵所翳　　菩提心為淨　汝觀淨月輪　　得證菩提心　授此心真言　　密誦而觀察真言曰。",
        "from": "T18n0874_001:0313c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)[曰/月]地唧哆(一)母怛摩(二合)那野弭(二)　能令心月輪　　圓滿益明顯　諸佛復告言　　菩提心堅固　復受心真言　　觀金剛蓮華真言曰。",
        "from": "T18n0874_001:0314a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)速乞叉(二合)摩嚩日囉(二合引)觀五股金剛真言曰。",
        "from": "T18n0874_001:0314a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)底瑟姹(二合)嚩日囉(二合)　汝於淨月輪　　觀五智金剛　令普周法界　　唯一大金剛漸廣真言曰。",
        "from": "T18n0874_001:0314a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)娑頗(二合)囉嚩日囉(二合引)漸略真言曰。",
        "from": "T18n0874_001:0314a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)僧賀(引)囉嚩日囉(二合引)　應當知自身　　即為金剛界真言曰。",
        "from": "T18n0874_001:0314a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)怛摩(二合)句憾　自身為金剛　　堅實無染壞　復白諸佛言　　我為金剛身　時彼諸如來　　便勅行者言　觀身為佛形　　復授此真言唵(引)野他(引)(一)薩嚩怛他誐哆(二)薩怛(二合)他憾　既見身成佛　　相好皆圓備　諸如來加持　　現證實相智　不改前印相　　應誦此真言唵(引)薩嚩怛他誐哆(一)鼻三[曰/月]地涅哩(二合)嗏(二)嚩日囉(二合)底瑟吒(二合)(三)　次結四如來　　三昧耶印契　各以本真言　　而用加持身　不動佛於心　　寶生尊於額　無量壽於喉　　不空成就頂真言曰。",
        "from": "T18n0874_001:0314a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)薩怛嚩(二合)(一)地瑟姹(二合)娑嚩(二合)[羊*含](二)吽(三)唵(引)嚩日囉(二合)囉怛曩(二合)(一)地瑟姹(二合)娑嚩(二合)[羊*含](二)怛[口*洛](二合)(三)唵(引)嚩日囉(二合)達囉磨(二合)(一)地瑟姹(二合)娑嚩(二合)[羊*含](二)紇哩以(三合三)唵(引)嚩日囉(二合)羯囉磨(二合)(一)地瑟姹(二合)娑嚩(二合)[羊*含](二)噁(三)　既已加持身　　次應受灌頂　五如來印契　　各如三昧耶　遍照灌於頂　　不動佛於額　寶生尊頂右　　無量壽頂後　不空成就佛　　應在頂之左真言曰。",
        "from": "T18n0874_001:0314b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩嚩怛他誐帶(一)濕嚩(二合)哩也(二合)鼻囇罽(二)鑁(三)唵(引)嚩日囉(二合)薩怛嚩(二合)(一)鼻瑟左[羊*含](二)吽(三)唵(引)嚩日囉(二合)囉怛曩(二合)(一)鼻瑟左[羊*含]怛[口*洛](二合二)唵(引)嚩日囉(二合)鉢納磨(三合一)鼻瑟左[羊*含][口*紇]哩以(二)唵(引)嚩日囉(二合)羯囉磨(二合)(一)鼻瑟左[羊*含](二)噁(三)　次應灌頂後　　應繫如來鬘　四方諸如來　　皆三昧耶契　額前二羽分　　三結於頂後　向前如垂帶　　先從檀慧開真言曰。",
        "from": "T18n0874_001:0314b25_0",
