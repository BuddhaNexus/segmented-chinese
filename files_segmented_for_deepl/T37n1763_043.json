[
    {
        "source_sentence": "大般涅槃經集解卷第四十三",
        "from": "T37n1763_043:0511c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　耆婆勸闍世王詣佛　廣說雜緣起事　出頻婆娑羅於空中勸闍世事　釋月愛三昧義　為闡提作一柱殿義梵行品之第八王今且聽釋提桓因(至)所有重罪必當得除。",
        "from": "T37n1763_043:0511c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0511c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0511c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔未說治罪人有驗。",
        "from": "T37n1763_043:0511c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今出所治之人為證。",
        "from": "T37n1763_043:0511c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王且聽有婆羅門子(至)為無上醫非六師也。",
        "from": "T37n1763_043:0511c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0511c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0511c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鴦崛摩羅。",
        "from": "T37n1763_043:0511c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此言指鬘也。",
        "from": "T37n1763_043:0511c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王復有須毘羅王子(至)為無上醫非六師也。",
        "from": "T37n1763_043:0511c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0511c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0511c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔有慳貪。",
        "from": "T37n1763_043:0511c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日渴飢。",
        "from": "T37n1763_043:0511c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞說其過。",
        "from": "T37n1763_043:0511c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生慚悔。",
        "from": "T37n1763_043:0511c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見水得飲。",
        "from": "T37n1763_043:0511c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王舍婆提國群賊五百(至)為大良醫非六師也。",
        "from": "T37n1763_043:0511c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0511c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0511c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四廣出諸蒙益之事。",
        "from": "T37n1763_043:0511c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明佛有道力。",
        "from": "T37n1763_043:0511c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能曠益無窮也。",
        "from": "T37n1763_043:0512a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王若能信臣語者(至)若不見信願善思之。",
        "from": "T37n1763_043:0512a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上至此。",
        "from": "T37n1763_043:0512a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六引現事為證。",
        "from": "T37n1763_043:0512a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自佛出世至今。",
        "from": "T37n1763_043:0512a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有犯罪而見佛者。",
        "from": "T37n1763_043:0512a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不除滅。",
        "from": "T37n1763_043:0512a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何王罪。",
        "from": "T37n1763_043:0512a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨不滅耶。",
        "from": "T37n1763_043:0512a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王諸佛世尊大悲普覆(至)亦當視佛如父母想。",
        "from": "T37n1763_043:0512a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐王思惟。",
        "from": "T37n1763_043:0512a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢求佛。",
        "from": "T37n1763_043:0512a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說大悲怨親平等。",
        "from": "T37n1763_043:0512a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣出等事也。",
        "from": "T37n1763_043:0512a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四廣引證。",
        "from": "T37n1763_043:0512a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以勸王行。",
        "from": "T37n1763_043:0512a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王當知如來不但(至)發阿耨多羅三藐三菩提心。",
        "from": "T37n1763_043:0512a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五明佛普覆。",
        "from": "T37n1763_043:0512a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不限一人也。",
        "from": "T37n1763_043:0512a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七明佛平等無有彼此也。",
        "from": "T37n1763_043:0512a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0512a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五佛心不偏。",
        "from": "T37n1763_043:0512a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以能除王罪也。",
        "from": "T37n1763_043:0512a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王假使一月常以衣食(至)到如來所誠心聽法。",
        "from": "T37n1763_043:0512a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯罪既重。",
        "from": "T37n1763_043:0512a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯應聽法。",
        "from": "T37n1763_043:0512a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非財施所能滅也。",
        "from": "T37n1763_043:0512a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六格量去留。",
        "from": "T37n1763_043:0512a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德多少也。",
        "from": "T37n1763_043:0512a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八明佛功德智慧因重。",
        "from": "T37n1763_043:0512a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅人罪也。",
        "from": "T37n1763_043:0512a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0512a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六明佛能加益人心。",
        "from": "T37n1763_043:0512a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以見佛。",
        "from": "T37n1763_043:0512a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必有福利也。",
        "from": "T37n1763_043:0512a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大王答耆婆言(至)深自鄙悼都無去心。",
        "from": "T37n1763_043:0512a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以往為慮。",
        "from": "T37n1763_043:0512a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自鄙穢累。",
        "from": "T37n1763_043:0512a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非聽法眷屬。",
        "from": "T37n1763_043:0512a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往恐不必接敘也。",
        "from": "T37n1763_043:0512a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七王自念罪重。",
        "from": "T37n1763_043:0512a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無去心也。",
        "from": "T37n1763_043:0512a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖聞上六種勝說。",
        "from": "T37n1763_043:0512a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶未敢去也。",
        "from": "T37n1763_043:0512a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時空中尋出聲言(至)瘡蒸毒熱但增無損。",
        "from": "T37n1763_043:0512a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證耆婆之言。",
        "from": "T37n1763_043:0512a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王罪既重。",
        "from": "T37n1763_043:0512a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛能除。",
        "from": "T37n1763_043:0512a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說佛欲涅槃。",
        "from": "T37n1763_043:0512a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸速往也。",
        "from": "T37n1763_043:0512a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三別也。",
        "from": "T37n1763_043:0512a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前外道勸覓邪見師。",
        "from": "T37n1763_043:0512a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次耆婆勸也。",
        "from": "T37n1763_043:0512a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今其父自勸。",
        "from": "T37n1763_043:0512a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令隨耆婆語也。",
        "from": "T37n1763_043:0512a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍世向疑罪重。",
        "from": "T37n1763_043:0512a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恥至佛所。",
        "from": "T37n1763_043:0512a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其父恐隨耶師。",
        "from": "T37n1763_043:0512b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今故勸也。",
        "from": "T37n1763_043:0512b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0512b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第三其父以神通之力。",
        "from": "T37n1763_043:0512b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸之令詣佛也。",
        "from": "T37n1763_043:0512b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊在雙樹間(至)至無量劫不入涅槃。",
        "from": "T37n1763_043:0512b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明如來見闍世之心。",
        "from": "T37n1763_043:0512b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自可救之理。",
        "from": "T37n1763_043:0512b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言味而求。",
        "from": "T37n1763_043:0512b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正為欲從闍世解常故耳。",
        "from": "T37n1763_043:0512b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言世尊(至)何故獨為阿闍世王。",
        "from": "T37n1763_043:0512b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人不解此旨。",
        "from": "T37n1763_043:0512b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故迦葉致問也。",
        "from": "T37n1763_043:0512b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善男子是大眾中(至)是故悶絕自投於地。",
        "from": "T37n1763_043:0512b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人現滅。",
        "from": "T37n1763_043:0512b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲以益物。",
        "from": "T37n1763_043:0512b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生定滅之倒。",
        "from": "T37n1763_043:0512b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致悶絕之苦者。",
        "from": "T37n1763_043:0512b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛則為之不涅槃也。",
        "from": "T37n1763_043:0512b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子如我所言(至)大涅槃經亦不可思議。",
        "from": "T37n1763_043:0512b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋密語也。",
        "from": "T37n1763_043:0512b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前四句出所為之事。",
        "from": "T37n1763_043:0512b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後二句說涅槃不滅。",
        "from": "T37n1763_043:0512b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應以佛滅故悶絕也。",
        "from": "T37n1763_043:0512b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋時之疑也。",
        "from": "T37n1763_043:0512b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非直一人。",
        "from": "T37n1763_043:0512b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并為一切未解常者也。",
        "from": "T37n1763_043:0512b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0512b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下有七別。",
        "from": "T37n1763_043:0512b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明佛放光引王詣佛。",
        "from": "T37n1763_043:0512b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為說法。",
        "from": "T37n1763_043:0512b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅王罪也。",
        "from": "T37n1763_043:0512b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至彼自言其七事。",
        "from": "T37n1763_043:0512b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即第一先唱密語。",
        "from": "T37n1763_043:0512b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊大悲導師(至)身瘡即愈欝蒸除滅。",
        "from": "T37n1763_043:0512b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以慈光遠至者。",
        "from": "T37n1763_043:0512b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王聞父誨。",
        "from": "T37n1763_043:0512b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄苦報。",
        "from": "T37n1763_043:0512b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必受不疑。",
        "from": "T37n1763_043:0512b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂罪不可消。",
        "from": "T37n1763_043:0512b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自鄙凶穢。",
        "from": "T37n1763_043:0512b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛不接顧。",
        "from": "T37n1763_043:0512b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此二疑。",
        "from": "T37n1763_043:0512b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢詣佛。",
        "from": "T37n1763_043:0512b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈光遠至。",
        "from": "T37n1763_043:0512b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二疑俱釋也。",
        "from": "T37n1763_043:0512b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第五段也。",
        "from": "T37n1763_043:0512b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前言為王住世治其心。",
        "from": "T37n1763_043:0512b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有其言。",
        "from": "T37n1763_043:0512b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未見其實。",
        "from": "T37n1763_043:0512b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月愛三昧。",
        "from": "T37n1763_043:0512b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始為驗也。",
        "from": "T37n1763_043:0512b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先治其身。",
        "from": "T37n1763_043:0512b25_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後治心也。",
        "from": "T37n1763_043:0512b25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0512b25_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二放光滅苦也。",
        "from": "T37n1763_043:0512b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王覺瘡愈身體清涼(至)先治王身然後及心。",
        "from": "T37n1763_043:0512b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引雙樹經。",
        "from": "T37n1763_043:0512b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱曾聞人說夫劫火。",
        "from": "T37n1763_043:0512b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不燒眾生。",
        "from": "T37n1763_043:0512b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先有三月並照。",
        "from": "T37n1763_043:0512b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除眾生病。",
        "from": "T37n1763_043:0512b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使得修禪上生。",
        "from": "T37n1763_043:0512b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月光既出。",
        "from": "T37n1763_043:0512c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無病不愈。",
        "from": "T37n1763_043:0512c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其時未至。",
        "from": "T37n1763_043:0512c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有妙光。",
        "from": "T37n1763_043:0512c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以喜而問也。",
        "from": "T37n1763_043:0512c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答云。",
        "from": "T37n1763_043:0512c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應故現光。",
        "from": "T37n1763_043:0512c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無定相也。",
        "from": "T37n1763_043:0512c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色非非色。",
        "from": "T37n1763_043:0512c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙釋真定相也。",
        "from": "T37n1763_043:0512c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非青非齊。",
        "from": "T37n1763_043:0512c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏釋真也。",
        "from": "T37n1763_043:0512c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為度眾生者。",
        "from": "T37n1763_043:0512c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏釋應也。",
        "from": "T37n1763_043:0512c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言耆婆如來世尊(至)是故復名月愛三昧。",
        "from": "T37n1763_043:0512c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七子之中。",
        "from": "T37n1763_043:0512c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一子遇病。",
        "from": "T37n1763_043:0512c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬凡夫。",
        "from": "T37n1763_043:0512c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六子譬六住。",
        "from": "T37n1763_043:0512c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈本緣苦。",
        "from": "T37n1763_043:0512c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若重則慈重。",
        "from": "T37n1763_043:0512c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初住已離三塗。",
        "from": "T37n1763_043:0512c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六住則永離人天。",
        "from": "T37n1763_043:0512c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛則放捨慈也。",
        "from": "T37n1763_043:0512c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0512c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二翻正列放光。",
        "from": "T37n1763_043:0512c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅其身苦事也。",
        "from": "T37n1763_043:0512c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王語耆婆我聞如來(至)當有何心往見如來。",
        "from": "T37n1763_043:0512c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖蒙遠光。",
        "from": "T37n1763_043:0512c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身病得除。",
        "from": "T37n1763_043:0512c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此經語。",
        "from": "T37n1763_043:0512c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懼不敢往也。",
        "from": "T37n1763_043:0512c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將無陷入地者。",
        "from": "T37n1763_043:0512c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若違經見佛。",
        "from": "T37n1763_043:0512c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐交致此苦也。",
        "from": "T37n1763_043:0512c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀如來者。",
        "from": "T37n1763_043:0512c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向引經語。",
        "from": "T37n1763_043:0512c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此以情推也。",
        "from": "T37n1763_043:0512c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖蒙光照。",
        "from": "T37n1763_043:0512c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶以善惡事隔。",
        "from": "T37n1763_043:0512c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且慚愧在顏。",
        "from": "T37n1763_043:0512c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不欲去也。",
        "from": "T37n1763_043:0512c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆答言大王譬如渴人(至)而當不蒙慈悲救濟。",
        "from": "T37n1763_043:0512c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為闡提說法者。",
        "from": "T37n1763_043:0512c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以重況輕。",
        "from": "T37n1763_043:0512c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證必濟也。",
        "from": "T37n1763_043:0512c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼非王所引之經。",
        "from": "T37n1763_043:0512c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若果尚為闡提說法。",
        "from": "T37n1763_043:0512c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不與惡人坐起耶。",
        "from": "T37n1763_043:0512c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王言耆婆我昔曾聞(至)何故如來而為說法。",
        "from": "T37n1763_043:0512c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0512c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來言不虛設。",
        "from": "T37n1763_043:0512c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何乃為闡提說法。",
        "from": "T37n1763_043:0512c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不然也。",
        "from": "T37n1763_043:0512c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆申佛意。",
        "from": "T37n1763_043:0512c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傍為說法。",
        "from": "T37n1763_043:0512c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚為闡提說法。",
        "from": "T37n1763_043:0512c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況王非闡提耶。",
        "from": "T37n1763_043:0512c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0512c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三王雖蒙光。",
        "from": "T37n1763_043:0512c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心猶未達。",
        "from": "T37n1763_043:0512c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請耆婆為決。",
        "from": "T37n1763_043:0512c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆婆答言大王譬如有人(至)語彼醫言速疾上車。",
        "from": "T37n1763_043:0512c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0512c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0512c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下第六說譬。",
        "from": "T37n1763_043:0512c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以慰王勸令去。",
        "from": "T37n1763_043:0512c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_043:0512c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為闡提說法。",
        "from": "T37n1763_043:0512c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡有三意。",
        "from": "T37n1763_043:0512c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如醫治病人。",
        "from": "T37n1763_043:0512c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為除現苦。",
        "from": "T37n1763_043:0512c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二遣眷屬橫苦。",
        "from": "T37n1763_043:0512c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三息外人誹謗。",
        "from": "T37n1763_043:0512c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合譬如此。",
        "from": "T37n1763_043:0512c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可知也。",
        "from": "T37n1763_043:0512c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時良醫即自思惟(至)如是病者必死不疑。",
        "from": "T37n1763_043:0513a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0513a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0513a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如來為闡提說法。",
        "from": "T37n1763_043:0513a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如醫審知病者必死。",
        "from": "T37n1763_043:0513a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得不說法。",
        "from": "T37n1763_043:0513a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為病人。",
        "from": "T37n1763_043:0513a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二為親族。",
        "from": "T37n1763_043:0513a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛亦爾。",
        "from": "T37n1763_043:0513a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得不說也。",
        "from": "T37n1763_043:0513a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王世尊亦爾於一闡提輩(至)為一闡提而演說法。",
        "from": "T37n1763_043:0513a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0513a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0513a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明闡提說法。",
        "from": "T37n1763_043:0513a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二利不虛。",
        "from": "T37n1763_043:0513a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前去凡夫誹謗。",
        "from": "T37n1763_043:0513a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後明利益闡提。",
        "from": "T37n1763_043:0513a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯說法不空也。",
        "from": "T37n1763_043:0513a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如淨人者。",
        "from": "T37n1763_043:0513a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻未來善根也。",
        "from": "T37n1763_043:0513a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王語耆婆若使如來(至)得道之人不入地獄。",
        "from": "T37n1763_043:0513a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_043:0513a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_043:0513a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冀汝捉持者。",
        "from": "T37n1763_043:0513a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懼犯罪增生。",
        "from": "T37n1763_043:0513a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入地獄也。",
        "from": "T37n1763_043:0513a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智秀曰。",
        "from": "T37n1763_043:0513a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七始從耆婆勸命駕。",
        "from": "T37n1763_043:0513a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至佛所去也。",
        "from": "T37n1763_043:0513a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_043:0513a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四翻聞法之機發也。",
        "from": "T37n1763_043:0513a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第四十三",
        "from": "T37n1763_043:0513a13_0",
        "context_with_next_sentence": false
    }
]