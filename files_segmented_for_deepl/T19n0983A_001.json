[
    {
        "source_sentence": "佛說大孔雀明王畫像壇場儀",
        "from": "T19n0983A_001:0439c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軌",
        "from": "T19n0983A_001:0439c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿",
        "from": "T19n0983A_001:0439c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅國公食邑三千戶賜紫贈司",
        "from": "T19n0983A_001:0439c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空諡大鑒正號大廣智大興善",
        "from": "T19n0983A_001:0439c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺三藏沙門不空奉　詔譯",
        "from": "T19n0983A_001:0439c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難陀。",
        "from": "T19n0983A_001:0439c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸世間所有災禍逼惱。",
        "from": "T19n0983A_001:0439c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀兵飢饉亢旱疾疫。",
        "from": "T19n0983A_001:0439c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四百四病憂惱鬪諍。",
        "from": "T19n0983A_001:0439c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及八萬四千鬼魅嬈惱有情。",
        "from": "T19n0983A_001:0439c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求世間出世間勝願多有障礙者。",
        "from": "T19n0983A_001:0439c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由無始已來貪愛無明。",
        "from": "T19n0983A_001:0439c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛妄分別三毒煩惱。",
        "from": "T19n0983A_001:0439c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不了實相積集不善。",
        "from": "T19n0983A_001:0439c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感招如是種種災難。",
        "from": "T19n0983A_001:0439c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀是故我今為彼讀誦佛母大孔雀明王經者。",
        "from": "T19n0983A_001:0439c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切災厄眾生。",
        "from": "T19n0983A_001:0439c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說畫像法及建立道場供養儀軌。",
        "from": "T19n0983A_001:0439c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依此法轉讀是經。",
        "from": "T19n0983A_001:0439c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災難皆得消除。",
        "from": "T19n0983A_001:0439c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有願求隨意滿足。",
        "from": "T19n0983A_001:0439c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀若有苦惱災難起時。",
        "from": "T19n0983A_001:0439c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或彼國王及諸王子大臣妃后。",
        "from": "T19n0983A_001:0439c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及苾芻苾芻尼善男子善女人等。",
        "from": "T19n0983A_001:0439c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為除災故。",
        "from": "T19n0983A_001:0439c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於王宮或於勝地。",
        "from": "T19n0983A_001:0439c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於清淨伽藍或隨本所居宅舍。",
        "from": "T19n0983A_001:0439c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法淨地掘深一肘。",
        "from": "T19n0983A_001:0439c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除去瓦礫地中穢物。",
        "from": "T19n0983A_001:0439c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "填滿淨土築令平正。",
        "from": "T19n0983A_001:0439c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其土本淨却用填之。",
        "from": "T19n0983A_001:0439c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若土有餘其地殊勝。",
        "from": "T19n0983A_001:0440a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應泥拭清淨建立道場作五肘方壇。",
        "from": "T19n0983A_001:0440a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高四指量三重布位。",
        "from": "T19n0983A_001:0440a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以彩畫或用五色粉成。",
        "from": "T19n0983A_001:0440a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於內院中心畫八葉蓮華。",
        "from": "T19n0983A_001:0440a03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蓮華胎上畫佛母大孔雀明王菩薩。",
        "from": "T19n0983A_001:0440a04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭向東方白色。",
        "from": "T19n0983A_001:0440a05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著白繒輕衣。",
        "from": "T19n0983A_001:0440a05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭冠瓔珞耳璫臂釧種種莊嚴。",
        "from": "T19n0983A_001:0440a05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘金色孔雀王。",
        "from": "T19n0983A_001:0440a06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐白蓮華上。",
        "from": "T19n0983A_001:0440a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或青綠花上。",
        "from": "T19n0983A_001:0440a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住慈悲相有四臂。",
        "from": "T19n0983A_001:0440a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右邊第一手執開敷蓮華。",
        "from": "T19n0983A_001:0440a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二手持俱緣果(其果狀相似水苽)左邊第一手當心掌持吉祥菓(如桃李形)第二手執三五莖孔雀尾。",
        "from": "T19n0983A_001:0440a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從佛母右邊右旋。",
        "from": "T19n0983A_001:0440a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝蓮華葉上。",
        "from": "T19n0983A_001:0440a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫七佛世尊。",
        "from": "T19n0983A_001:0440a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從微鉢尸如來乃至釋迦及慈氏菩薩等。",
        "from": "T19n0983A_001:0440a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆頭向外坐各住定相。",
        "from": "T19n0983A_001:0440a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至西北角第八葉上。",
        "from": "T19n0983A_001:0440a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫慈氏菩薩。",
        "from": "T19n0983A_001:0440a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執軍持右手揚掌向外作施無畏勢。",
        "from": "T19n0983A_001:0440a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於蓮華葉外。",
        "from": "T19n0983A_001:0440a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內院四方畫四辟支佛。",
        "from": "T19n0983A_001:0440a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆作佛形頂有肉髻亦住定相。",
        "from": "T19n0983A_001:0440a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於四隅畫四大聲聞。",
        "from": "T19n0983A_001:0440a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從東北隅畫阿難陀。",
        "from": "T19n0983A_001:0440a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次東南隅畫羅睺羅。",
        "from": "T19n0983A_001:0440a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西南隅畫舍利弗。",
        "from": "T19n0983A_001:0440a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西北隅畫大目揵連。",
        "from": "T19n0983A_001:0440a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆著揵陀袈裟偏袒右臂。",
        "from": "T19n0983A_001:0440a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆中院。",
        "from": "T19n0983A_001:0440a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第二院畫八方天王并諸眷屬。",
        "from": "T19n0983A_001:0440a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方畫帝釋天王。",
        "from": "T19n0983A_001:0440a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執金剛杵與諸天眾圍遶。",
        "from": "T19n0983A_001:0440a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次東南方畫火天。",
        "from": "T19n0983A_001:0440a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執軍持右手施無畏。",
        "from": "T19n0983A_001:0440a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與五通苦行仙眾圍遶。",
        "from": "T19n0983A_001:0440a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次南方畫焰摩天王。",
        "from": "T19n0983A_001:0440a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執焰摩幢。",
        "from": "T19n0983A_001:0440a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與焰摩界鬼眾圍遶次西南方畫羅剎王執刀。",
        "from": "T19n0983A_001:0440a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸羅剎眾圍遶。",
        "from": "T19n0983A_001:0440a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西方畫水天。",
        "from": "T19n0983A_001:0440a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持羂索。",
        "from": "T19n0983A_001:0440a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸龍眾圍遶。",
        "from": "T19n0983A_001:0440a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西北方畫風天王。",
        "from": "T19n0983A_001:0440a26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執幢幡。",
        "from": "T19n0983A_001:0440a27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸持明仙眾圍遶。",
        "from": "T19n0983A_001:0440a27_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次北方畫多聞天王。",
        "from": "T19n0983A_001:0440a27_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執寶棒。",
        "from": "T19n0983A_001:0440a28_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸藥叉眾圍遶。",
        "from": "T19n0983A_001:0440a28_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次東北方畫伊舍那天。",
        "from": "T19n0983A_001:0440a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執三戟叉。",
        "from": "T19n0983A_001:0440a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸步多鬼眾圍遶。",
        "from": "T19n0983A_001:0440a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此皆是第二院。",
        "from": "T19n0983A_001:0440b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第三院從東北隅。",
        "from": "T19n0983A_001:0440b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋周匝畫二十八大藥叉將。",
        "from": "T19n0983A_001:0440b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各與諸鬼神眾圍遶。",
        "from": "T19n0983A_001:0440b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及畫宿曜十二宮神。",
        "from": "T19n0983A_001:0440b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第三院外周匝。",
        "from": "T19n0983A_001:0440b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用香泥塗飾。",
        "from": "T19n0983A_001:0440b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布以荷葉。",
        "from": "T19n0983A_001:0440b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葉上安置供養食食所謂乳麋酪飯食果子等。",
        "from": "T19n0983A_001:0440b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以阿波羅爾多明王真言。",
        "from": "T19n0983A_001:0440b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持香水散灑。",
        "from": "T19n0983A_001:0440b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布列四邊供養。",
        "from": "T19n0983A_001:0440b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以諸漿沙糖石蜜石榴蜜漿等而奉獻之。",
        "from": "T19n0983A_001:0440b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇上散白色花於四角置酥燈四盞。",
        "from": "T19n0983A_001:0440b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四門各置二淨器滿盛香水。",
        "from": "T19n0983A_001:0440b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇東安佛母大孔雀明王像。",
        "from": "T19n0983A_001:0440b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其畫像法如前畫壇。",
        "from": "T19n0983A_001:0440b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯不安界道即是。",
        "from": "T19n0983A_001:0440b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中院聖眾燒沈香和香等供養。",
        "from": "T19n0983A_001:0440b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方天眾應燒白膠香而為供養。",
        "from": "T19n0983A_001:0440b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方天眾以紫鑛芥子及鹽相和燒之供養。",
        "from": "T19n0983A_001:0440b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方天眾以酥和安悉香燒之供養。",
        "from": "T19n0983A_001:0440b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方天眾應燒薰陸香而供養之。",
        "from": "T19n0983A_001:0440b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦者於壇西面。",
        "from": "T19n0983A_001:0440b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敷茅薦為座。",
        "from": "T19n0983A_001:0440b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或坐卑脚床子。",
        "from": "T19n0983A_001:0440b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴飾經案置於壇前。",
        "from": "T19n0983A_001:0440b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸香花供養經卷。",
        "from": "T19n0983A_001:0440b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如是布列。",
        "from": "T19n0983A_001:0440b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉讀經者可三人五人乃至七人。",
        "from": "T19n0983A_001:0440b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更替相續晝夜不令經聲間斷。",
        "from": "T19n0983A_001:0440b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要在絕語言。",
        "from": "T19n0983A_001:0440b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除數內一人明閑教法。",
        "from": "T19n0983A_001:0440b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪師指撝取與祇對。",
        "from": "T19n0983A_001:0440b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法結印啟請賢聖。",
        "from": "T19n0983A_001:0440b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘人但當至心讀經。",
        "from": "T19n0983A_001:0440b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯在遍數多。",
        "from": "T19n0983A_001:0440b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慇重發願依三十七尊禮懺。",
        "from": "T19n0983A_001:0440b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三時或六時。",
        "from": "T19n0983A_001:0440b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其道場或一日或二日三日乃至七日。",
        "from": "T19n0983A_001:0440b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災禍悉皆殄滅。",
        "from": "T19n0983A_001:0440b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除不至心。",
        "from": "T19n0983A_001:0440b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉經者或在家人或是出家人。",
        "from": "T19n0983A_001:0440b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日澡浴清淨著新淨衣。",
        "from": "T19n0983A_001:0440b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初起首時對道場前。",
        "from": "T19n0983A_001:0440b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠一心禮諸聖眾。",
        "from": "T19n0983A_001:0440b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以印契真言。",
        "from": "T19n0983A_001:0440b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教請召一切佛菩薩及諸天眾。",
        "from": "T19n0983A_001:0440b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法供養。",
        "from": "T19n0983A_001:0440b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說所求事慇懃啟告。",
        "from": "T19n0983A_001:0440b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂加護。",
        "from": "T19n0983A_001:0440b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為一切苦難眾生。",
        "from": "T19n0983A_001:0440b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣發大願。",
        "from": "T19n0983A_001:0440b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結跏趺坐以塗香塗手。",
        "from": "T19n0983A_001:0440b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先結三昧耶印。",
        "from": "T19n0983A_001:0440c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手右押左外相叉作拳。",
        "from": "T19n0983A_001:0440c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直竪二中指頭相拄即成。",
        "from": "T19n0983A_001:0440c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印當心誦三昧耶真言七遍真言曰。",
        "from": "T19n0983A_001:0440c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵三(去)麼(上)野娑怛鍐(三合)即以此印加持自身四處。",
        "from": "T19n0983A_001:0440c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂心額喉頂頂上散印。",
        "from": "T19n0983A_001:0440c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛鉤菩薩印。",
        "from": "T19n0983A_001:0440c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前三昧耶印。",
        "from": "T19n0983A_001:0440c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二頭指屈如鉤向身招。",
        "from": "T19n0983A_001:0440c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不間斷誦真言七遍。",
        "from": "T19n0983A_001:0440c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普召諸佛菩薩諸天鬼神一切聖眾真言曰。",
        "from": "T19n0983A_001:0440c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日[口*朗](二合引)矩尸(一)阿(引)羯(重呼)茶微羯茶娑嚩(二合引)訶由結此印誦真言請。",
        "from": "T19n0983A_001:0440c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召一切聖眾不違本誓皆來赴集。",
        "from": "T19n0983A_001:0440c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結阿波羅爾多明王印。",
        "from": "T19n0983A_001:0440c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用結地界結方隅界。",
        "from": "T19n0983A_001:0440c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手右押左內相叉。",
        "from": "T19n0983A_001:0440c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直竪一中指頭相拄。",
        "from": "T19n0983A_001:0440c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以印頂上右旋三匝。",
        "from": "T19n0983A_001:0441a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心遠近便成結界誦七遍真言曰。",
        "from": "T19n0983A_001:0441a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵虎嚕虎嚕戰拏里摩蹬岐(去)娑嚩(二合引)訶(引)次結普供養一切賢聖印。",
        "from": "T19n0983A_001:0441a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手右押左相叉合掌。",
        "from": "T19n0983A_001:0441a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十指互交上節即成。",
        "from": "T19n0983A_001:0441a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印當心誦七遍頂上散印真言曰。",
        "from": "T19n0983A_001:0441a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多勃馱(引)南(一)薩嚩佗(引二)欠(平三)嗢娜櫱(二合)帝(四)娑[叵*頁](二合)囉呬(馨異反引)[牟*含](五)誐誐曩劍(六)娑嚩(二合引)訶由結此印及誦真言。",
        "from": "T19n0983A_001:0441a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於一一佛菩薩諸聖眾前及於無量諸佛剎土。",
        "from": "T19n0983A_001:0441a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成辦一切廣大供養。",
        "from": "T19n0983A_001:0441a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結佛母大孔雀明王印。",
        "from": "T19n0983A_001:0441a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手右押左內相叉。",
        "from": "T19n0983A_001:0441a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指二小指。",
        "from": "T19n0983A_001:0441a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各直竪頭相拄即成。",
        "from": "T19n0983A_001:0441a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印當心誦真言七遍。",
        "from": "T19n0983A_001:0441a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前以印加持四處頂上散印真言曰。",
        "from": "T19n0983A_001:0441a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵麼庾(引)囉(引)訖蘭(二合引)帝(引)娑嚩(二合引)訶次捧香爐奉獻啟請。",
        "from": "T19n0983A_001:0441a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告白聖眾說所求事。",
        "from": "T19n0983A_001:0441a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是依法請召供養已。",
        "from": "T19n0983A_001:0441a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後起悲愍心。",
        "from": "T19n0983A_001:0441a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為拔濟眾生苦難故。",
        "from": "T19n0983A_001:0441a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉讀此經。",
        "from": "T19n0983A_001:0441a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日中前換諸供物。",
        "from": "T19n0983A_001:0441a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應結阿波羅爾多明王印誦本真言。",
        "from": "T19n0983A_001:0441a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印頂上左旋一匝。",
        "from": "T19n0983A_001:0441a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫解其界換供養已。",
        "from": "T19n0983A_001:0441a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如前次第再迎請結界如是依教供養轉讀此經。",
        "from": "T19n0983A_001:0441a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有災難亢旱疾疫。",
        "from": "T19n0983A_001:0441a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼魅厭禱惡毒災障。",
        "from": "T19n0983A_001:0441a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種苦難必得除滅。",
        "from": "T19n0983A_001:0441a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有祈願無不遂心。",
        "from": "T19n0983A_001:0441a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我已廣說畫像壇場供養儀軌竟。",
        "from": "T19n0983A_001:0441a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不辦如是塗畫壇場。",
        "from": "T19n0983A_001:0441a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有急速災難至。",
        "from": "T19n0983A_001:0441a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可隨自力分於一淨處。",
        "from": "T19n0983A_001:0441a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷塗地作一肘方壇。",
        "from": "T19n0983A_001:0441b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其大小。",
        "from": "T19n0983A_001:0441b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "磨白檀香塗作圓壇。",
        "from": "T19n0983A_001:0441b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九位中安佛像。",
        "from": "T19n0983A_001:0441b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以三五莖孔雀尾竪於壇上。",
        "from": "T19n0983A_001:0441b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨時燒香散花乳糜酪等供養聖眾。",
        "from": "T19n0983A_001:0441b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但虔誠一心轉讀此經。",
        "from": "T19n0983A_001:0441b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一遍或三遍乃至七遍。",
        "from": "T19n0983A_001:0441b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一日或二日。",
        "from": "T19n0983A_001:0441b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切厄難悉得消除。",
        "from": "T19n0983A_001:0441b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有祈願皆得圓滿。",
        "from": "T19n0983A_001:0441b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時阿難陀聞佛世尊。",
        "from": "T19n0983A_001:0441b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為當來世一切苦難有情。",
        "from": "T19n0983A_001:0441b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此讀誦大孔雀明王經法。",
        "from": "T19n0983A_001:0441b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴受持禮佛而退。",
        "from": "T19n0983A_001:0441b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大孔雀明王畫像壇場儀軌(卷)",
        "from": "T19n0983A_001:0441b11_0",
        "context_with_next_sentence": false
    }
]