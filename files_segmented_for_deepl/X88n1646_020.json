[
    {
        "source_sentence": "居士傳二十",
        "from": "X88n1646_020:0217c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楊大年李公武傳",
        "from": "X88n1646_020:0217c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楊大年名億。",
        "from": "X88n1646_020:0217c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浦城人也。",
        "from": "X88n1646_020:0217c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少能文。",
        "from": "X88n1646_020:0217c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十一宋太宗召試詩賦。",
        "from": "X88n1646_020:0217c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授秘書省正字。",
        "from": "X88n1646_020:0217c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真宗朝累遷至左司諫。",
        "from": "X88n1646_020:0217c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸平中詔近臣議靈州棄守事。",
        "from": "X88n1646_020:0217c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年上書極言征戍之苦。",
        "from": "X88n1646_020:0217c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄之便。",
        "from": "X88n1646_020:0217c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真宗立劉后。",
        "from": "X88n1646_020:0217c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "后所出微。",
        "from": "X88n1646_020:0217c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝臣以為不可。",
        "from": "X88n1646_020:0217c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真宗欲得大年草制。",
        "from": "X88n1646_020:0217c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使丁謂諭旨。",
        "from": "X88n1646_020:0218a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年難之。",
        "from": "X88n1646_020:0218a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂曰。",
        "from": "X88n1646_020:0218a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勉為之。",
        "from": "X88n1646_020:0218a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不愁不富貴。",
        "from": "X88n1646_020:0218a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年曰。",
        "from": "X88n1646_020:0218a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此富貴。",
        "from": "X88n1646_020:0218a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非所欲也。",
        "from": "X88n1646_020:0218a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以命陳彭年。",
        "from": "X88n1646_020:0218a02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋移疾歸。",
        "from": "X88n1646_020:0218a03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年初不知有佛。",
        "from": "X88n1646_020:0218a03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後會翰林李維勉以宗門事相策發。",
        "from": "X88n1646_020:0218a03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂生深信。",
        "from": "X88n1646_020:0218a04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著發願文云。",
        "from": "X88n1646_020:0218a04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方常住一切諸佛。",
        "from": "X88n1646_020:0218a04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真淨妙法。",
        "from": "X88n1646_020:0218a05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生聖人。",
        "from": "X88n1646_020:0218a05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願以真實眼。",
        "from": "X88n1646_020:0218a05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實智。",
        "from": "X88n1646_020:0218a05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實平等。",
        "from": "X88n1646_020:0218a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不捨誓願。",
        "from": "X88n1646_020:0218a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞賜哀憐。",
        "from": "X88n1646_020:0218a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切念億與法界眾生。",
        "from": "X88n1646_020:0218a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始曠大劫來。",
        "from": "X88n1646_020:0218a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未識佛時。",
        "from": "X88n1646_020:0218a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未遇法時。",
        "from": "X88n1646_020:0218a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未會僧時。",
        "from": "X88n1646_020:0218a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間至於今日。",
        "from": "X88n1646_020:0218a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趨塵背覺。",
        "from": "X88n1646_020:0218a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷失本心。",
        "from": "X88n1646_020:0218a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉解脫門。",
        "from": "X88n1646_020:0218a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涉輪迴道。",
        "from": "X88n1646_020:0218a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蝟張見網。",
        "from": "X88n1646_020:0218a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜂喧妄廛。",
        "from": "X88n1646_020:0218a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懸嗜慾之帆。",
        "from": "X88n1646_020:0218a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼓無明之浪。",
        "from": "X88n1646_020:0218a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杯我慢酒。",
        "from": "X88n1646_020:0218a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醉苦惱鄉。",
        "from": "X88n1646_020:0218a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不憑歸向之誠。",
        "from": "X88n1646_020:0218a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是滯因果之迹。",
        "from": "X88n1646_020:0218a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯過咎。",
        "from": "X88n1646_020:0218a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊佛所知。",
        "from": "X88n1646_020:0218a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟佛所見。",
        "from": "X88n1646_020:0218a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若輕若重。",
        "from": "X88n1646_020:0218a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等與法界眾生有茲罪者同共懺悔。",
        "from": "X88n1646_020:0218a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願罪消滅。",
        "from": "X88n1646_020:0218a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以億所集善根隨時回向真如實際。",
        "from": "X88n1646_020:0218a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承諸佛本誓願力。",
        "from": "X88n1646_020:0218a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大威猛力。",
        "from": "X88n1646_020:0218a13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝護念力。",
        "from": "X88n1646_020:0218a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際直至無上菩提。",
        "from": "X88n1646_020:0218a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切依正莊嚴具。",
        "from": "X88n1646_020:0218a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切自他解脫門。",
        "from": "X88n1646_020:0218a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切三昧門。",
        "from": "X88n1646_020:0218a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切陀羅尼門。",
        "from": "X88n1646_020:0218a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切安立眾生門。",
        "from": "X88n1646_020:0218a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一稱虗空等法界。",
        "from": "X88n1646_020:0218a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有我身起勇猛心。",
        "from": "X88n1646_020:0218a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身命財。",
        "from": "X88n1646_020:0218a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興大佛事。",
        "from": "X88n1646_020:0218a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大利益。",
        "from": "X88n1646_020:0218a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝化有情。",
        "from": "X88n1646_020:0218a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸有情見我身。",
        "from": "X88n1646_020:0218a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞我名。",
        "from": "X88n1646_020:0218a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆發菩提心。",
        "from": "X88n1646_020:0218a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與我同回向。",
        "from": "X88n1646_020:0218a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上菩提心不退轉。",
        "from": "X88n1646_020:0218a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願億與法界眾生未契心者。",
        "from": "X88n1646_020:0218a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開佛知見。",
        "from": "X88n1646_020:0218a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟自本心。",
        "from": "X88n1646_020:0218a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念發明。",
        "from": "X88n1646_020:0218a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸境純淨。",
        "from": "X88n1646_020:0218a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去來坐立見聞覺知。",
        "from": "X88n1646_020:0218a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸以如實智相應。",
        "from": "X88n1646_020:0218a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相違背。",
        "from": "X88n1646_020:0218a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今去已盡未來際。",
        "from": "X88n1646_020:0218a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令菩提心相續不斷。",
        "from": "X88n1646_020:0218a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作利益常得現前。",
        "from": "X88n1646_020:0218a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養諸佛利樂眾生。",
        "from": "X88n1646_020:0218a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生成佛盡。",
        "from": "X88n1646_020:0218a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後成正覺。",
        "from": "X88n1646_020:0218a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗空有盡。",
        "from": "X88n1646_020:0218a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我願無窮。",
        "from": "X88n1646_020:0218a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界有邊。",
        "from": "X88n1646_020:0218a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願心無極。",
        "from": "X88n1646_020:0218a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病起由秘書監出知汝州。",
        "from": "X88n1646_020:0218a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁廣慧禪師。",
        "from": "X88n1646_020:0218b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問布皷當軒擊。",
        "from": "X88n1646_020:0218b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰是知音者。",
        "from": "X88n1646_020:0218b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣慧曰來風深辨。",
        "from": "X88n1646_020:0218b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年曰恁麼則禪客相逢祇彈指也。",
        "from": "X88n1646_020:0218b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣慧曰君子可入。",
        "from": "X88n1646_020:0218b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年應諾。",
        "from": "X88n1646_020:0218b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣慧曰草賊大敗。",
        "from": "X88n1646_020:0218b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜語次。",
        "from": "X88n1646_020:0218b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣慧曰。",
        "from": "X88n1646_020:0218b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公曾與何人道話來。",
        "from": "X88n1646_020:0218b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年曰。",
        "from": "X88n1646_020:0218b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "億曾問雲嚴諒監寺。",
        "from": "X88n1646_020:0218b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩个大蟲相咬時如何。",
        "from": "X88n1646_020:0218b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諒曰一合相。",
        "from": "X88n1646_020:0218b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "億曰我祇管看。",
        "from": "X88n1646_020:0218b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未審得如此道否。",
        "from": "X88n1646_020:0218b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣慧曰。",
        "from": "X88n1646_020:0218b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我即不然。",
        "from": "X88n1646_020:0218b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年曰請和尚別轉一語。",
        "from": "X88n1646_020:0218b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧以手作拽鼻勢曰。",
        "from": "X88n1646_020:0218b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這畜生更[跳兆+孛]跳在。",
        "from": "X88n1646_020:0218b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年言下脫然。",
        "from": "X88n1646_020:0218b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有偈曰。",
        "from": "X88n1646_020:0218b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八角磨盤空裏走。",
        "from": "X88n1646_020:0218b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金毛獅子變作狗。",
        "from": "X88n1646_020:0218b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擬欲將身北斗藏。",
        "from": "X88n1646_020:0218b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更須合掌南辰後。",
        "from": "X88n1646_020:0218b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自後與廣慧遊從日密。",
        "from": "X88n1646_020:0218b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂嗣其法。",
        "from": "X88n1646_020:0218b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞致書李維勉曰。",
        "from": "X88n1646_020:0218b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自遇廣慧師。",
        "from": "X88n1646_020:0218b10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請扣無方。",
        "from": "X88n1646_020:0218b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙滯頓釋。",
        "from": "X88n1646_020:0218b11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半歲之後曠然弗疑。",
        "from": "X88n1646_020:0218b11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如忘忽記。",
        "from": "X88n1646_020:0218b11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如夢忽覺。",
        "from": "X88n1646_020:0218b12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平昔礙膺之物爆然自落。",
        "from": "X88n1646_020:0218b12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積劫未明之事廓然現前。",
        "from": "X88n1646_020:0218b12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼紹之緣其在是矣。",
        "from": "X88n1646_020:0218b13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天禧四年為翰林學士。",
        "from": "X88n1646_020:0218b13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代宼凖奏請太子監國。",
        "from": "X88n1646_020:0218b14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斥丁謂姦邪。",
        "from": "X88n1646_020:0218b14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂聞而深恨之。",
        "from": "X88n1646_020:0218b14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是歲微疾。",
        "from": "X88n1646_020:0218b15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "環禪師往視之。",
        "from": "X88n1646_020:0218b15_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年曰。",
        "from": "X88n1646_020:0218b15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "億四大將離。",
        "from": "X88n1646_020:0218b15_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師如何相救。",
        "from": "X88n1646_020:0218b16_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "環槌胸三下。",
        "from": "X88n1646_020:0218b16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年曰賴遇作家。",
        "from": "X88n1646_020:0218b16_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "環曰。",
        "from": "X88n1646_020:0218b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幾年學佛法。",
        "from": "X88n1646_020:0218b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗氣猶未除。",
        "from": "X88n1646_020:0218b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年曰禍不單行。",
        "from": "X88n1646_020:0218b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "環作噓噓聲。",
        "from": "X88n1646_020:0218b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年書偈遺李都尉曰。",
        "from": "X88n1646_020:0218b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漚生與漚滅。",
        "from": "X88n1646_020:0218b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二法本來齊。",
        "from": "X88n1646_020:0218b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲識真歸處。",
        "from": "X88n1646_020:0218b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州東院西。",
        "from": "X88n1646_020:0218b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都尉得偈曰。",
        "from": "X88n1646_020:0218b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泰山廟裏賣紙錢。",
        "from": "X88n1646_020:0218b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即往詣之。",
        "from": "X88n1646_020:0218b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而大年逝矣。",
        "from": "X88n1646_020:0218b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年四十七。",
        "from": "X88n1646_020:0218b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡曰文(武夷集．五燈會元．宋史)。",
        "from": "X88n1646_020:0218b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李公武名遵勗。",
        "from": "X88n1646_020:0218b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上黨人也。",
        "from": "X88n1646_020:0218b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉進士。",
        "from": "X88n1646_020:0218b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚萬壽長公主為駙馬都尉。",
        "from": "X88n1646_020:0218b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累官至鎮國軍節度使。",
        "from": "X88n1646_020:0218b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性尚朴素。",
        "from": "X88n1646_020:0218b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有節概。",
        "from": "X88n1646_020:0218b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖間請太后歸政天子。",
        "from": "X88n1646_020:0218b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論者韙之。",
        "from": "X88n1646_020:0218b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居常探索宗要無間寒暑。",
        "from": "X88n1646_020:0218b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得心法於谷隱禪師。",
        "from": "X88n1646_020:0218c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞作偈云。",
        "from": "X88n1646_020:0218c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學道須是鐵漢。",
        "from": "X88n1646_020:0218c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著手心頭便判。",
        "from": "X88n1646_020:0218c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直趨無上菩提。",
        "from": "X88n1646_020:0218c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切是非莫管。",
        "from": "X88n1646_020:0218c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公武不樂仕宦。",
        "from": "X88n1646_020:0218c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請援唐韋嗣立故事退處山林。",
        "from": "X88n1646_020:0218c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許。",
        "from": "X88n1646_020:0218c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與楊大年及慈明禪師為法門好友。",
        "from": "X88n1646_020:0218c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大年卒。",
        "from": "X88n1646_020:0218c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為制服。",
        "from": "X88n1646_020:0218c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將卒之年。",
        "from": "X88n1646_020:0218c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣使邀慈明於唐明。",
        "from": "X88n1646_020:0218c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既至月餘而公武得疾。",
        "from": "X88n1646_020:0218c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨終畫一圓相作偈曰。",
        "from": "X88n1646_020:0218c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界無依。",
        "from": "X88n1646_020:0218c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山河匪礙。",
        "from": "X88n1646_020:0218c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海微塵。",
        "from": "X88n1646_020:0218c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌納芥。",
        "from": "X88n1646_020:0218c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈起幞頭。",
        "from": "X88n1646_020:0218c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解下腰帶。",
        "from": "X88n1646_020:0218c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若覓死生。",
        "from": "X88n1646_020:0218c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問取皮袋。",
        "from": "X88n1646_020:0218c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈明問曰如何是本來佛性。",
        "from": "X88n1646_020:0218c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公武曰今日熱如昨日。",
        "from": "X88n1646_020:0218c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨問曰臨行一句作麼生。",
        "from": "X88n1646_020:0218c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈明曰。",
        "from": "X88n1646_020:0218c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來無罣礙。",
        "from": "X88n1646_020:0218c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨處任方圓。",
        "from": "X88n1646_020:0218c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公武曰。",
        "from": "X88n1646_020:0218c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚來倦甚。",
        "from": "X88n1646_020:0218c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不答話。",
        "from": "X88n1646_020:0218c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂泊然而逝。",
        "from": "X88n1646_020:0218c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仲子端愿。",
        "from": "X88n1646_020:0218c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官大尉。",
        "from": "X88n1646_020:0218c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦篤志祖道。",
        "from": "X88n1646_020:0218c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "築室後圃。",
        "from": "X88n1646_020:0218c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邀達觀禪師處之。",
        "from": "X88n1646_020:0218c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝夕咨參。",
        "from": "X88n1646_020:0218c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至忘寢食。",
        "from": "X88n1646_020:0218c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日問達觀曰。",
        "from": "X88n1646_020:0218c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天堂地獄畢竟是有是無。",
        "from": "X88n1646_020:0218c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀曰。",
        "from": "X88n1646_020:0218c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛向無中說有。",
        "from": "X88n1646_020:0218c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼見空花。",
        "from": "X88n1646_020:0218c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太尉就有裏尋無。",
        "from": "X88n1646_020:0218c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手撈水月。",
        "from": "X88n1646_020:0218c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪笑眼前見牢獄不避。",
        "from": "X88n1646_020:0218c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心外聞天堂欲生。",
        "from": "X88n1646_020:0218c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊不知忻怖在心。",
        "from": "X88n1646_020:0218c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡成境。",
        "from": "X88n1646_020:0218c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太尉但了自心。",
        "from": "X88n1646_020:0218c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然無惑。",
        "from": "X88n1646_020:0218c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰心如何了。",
        "from": "X88n1646_020:0218c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀曰善惡都莫思量。",
        "from": "X88n1646_020:0218c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰不思量後心歸何所。",
        "from": "X88n1646_020:0218c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀曰且請太尉歸宅。",
        "from": "X88n1646_020:0218c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰祇如人死後心歸何所。",
        "from": "X88n1646_020:0218c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀曰未知生焉知死。",
        "from": "X88n1646_020:0218c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰生則已知。",
        "from": "X88n1646_020:0218c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀曰生從何來。",
        "from": "X88n1646_020:0218c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端愿擬對。",
        "from": "X88n1646_020:0218c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀揕其胸曰。",
        "from": "X88n1646_020:0218c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇在這裏。",
        "from": "X88n1646_020:0218c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思量則甚。",
        "from": "X88n1646_020:0218c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端愿曰。",
        "from": "X88n1646_020:0218c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會也。",
        "from": "X88n1646_020:0218c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只知貪程不覺蹉路。",
        "from": "X88n1646_020:0218c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達觀拓開曰百年一夢。",
        "from": "X88n1646_020:0218c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端愿說偈曰。",
        "from": "X88n1646_020:0218c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十八歲。",
        "from": "X88n1646_020:0218c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懵然無知。",
        "from": "X88n1646_020:0218c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及其有知。",
        "from": "X88n1646_020:0218c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何異無知。",
        "from": "X88n1646_020:0218c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滔滔汴水。",
        "from": "X88n1646_020:0218c22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱隱隋堤。",
        "from": "X88n1646_020:0218c22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師其歸矣。",
        "from": "X88n1646_020:0218c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "箭浪東馳。",
        "from": "X88n1646_020:0218c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端愿立朝有直節。",
        "from": "X88n1646_020:0218c23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以太子太保致仕終(五燈會元．宋史)。",
        "from": "X88n1646_020:0218c23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_020:0219a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楊李二公不捨塵勞頓明本有。",
        "from": "X88n1646_020:0219a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂超然於生死之際。",
        "from": "X88n1646_020:0219a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偉哉。",
        "from": "X88n1646_020:0219a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初機學人往往厭動求靜。",
        "from": "X88n1646_020:0219a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜不可得。",
        "from": "X88n1646_020:0219a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱攻中。",
        "from": "X88n1646_020:0219a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業繫日強。",
        "from": "X88n1646_020:0219a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄希解脫。",
        "from": "X88n1646_020:0219a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難矣。",
        "from": "X88n1646_020:0219a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即奈何不取鏡於二公也。",
        "from": "X88n1646_020:0219a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳曰。",
        "from": "X88n1646_020:0219a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣慧．達觀皆得臨濟機用。",
        "from": "X88n1646_020:0219a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以能了當人大事。",
        "from": "X88n1646_020:0219a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近來知解之流。",
        "from": "X88n1646_020:0219a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇向人如何若何怎麼怎麼。",
        "from": "X88n1646_020:0219a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弄得人[跳兆+孛]跳者只管[跳兆+孛]跳去。",
        "from": "X88n1646_020:0219a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪程者只管貪程",
        "from": "X88n1646_020:0219a07_6",
        "context_with_next_sentence": false
    }
]