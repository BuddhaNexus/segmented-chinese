[
    {
        "source_sentence": " 禪宗頌古聯珠通集序",
        "from": "X65n1295_001:0475a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前集賢待制承事郎馮子振　撰",
        "from": "X65n1295_001:0475a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪宗頌古聯珠者。",
        "from": "X65n1295_001:0475a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錢唐沙門普會演寶鑑師法應所編。",
        "from": "X65n1295_001:0475a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從上古德直指之聲欬也。",
        "from": "X65n1295_001:0475a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其機緣每一則。",
        "from": "X65n1295_001:0475a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "續已有補未有。",
        "from": "X65n1295_001:0475a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因壽之板以喚禪客。",
        "from": "X65n1295_001:0475a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日似爭第一帙蘄小序閱將竟。",
        "from": "X65n1295_001:0475a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為之稱讚曰。",
        "from": "X65n1295_001:0475a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此勝自在耶。",
        "from": "X65n1295_001:0475a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此具足如意摩尼耶。",
        "from": "X65n1295_001:0475a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此會師所為聯珠。",
        "from": "X65n1295_001:0475a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果象罔親得之赤水者耶。",
        "from": "X65n1295_001:0475a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異時西域槖裝。",
        "from": "X65n1295_001:0475a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸陽晞價之賈髯。",
        "from": "X65n1295_001:0475a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高鼻碧矑而之列肆。",
        "from": "X65n1295_001:0475a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙肘擎戴端的即是非是。",
        "from": "X65n1295_001:0475a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則荊山之璞投之瞎砌。",
        "from": "X65n1295_001:0475a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病足再刖。",
        "from": "X65n1295_001:0475a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有灑血抱泣以相明。",
        "from": "X65n1295_001:0475a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或謂。",
        "from": "X65n1295_001:0475a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊吾園者。",
        "from": "X65n1295_001:0475a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "睹須曼花。",
        "from": "X65n1295_001:0475a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "登覺地者。",
        "from": "X65n1295_001:0475a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證菴羅果。",
        "from": "X65n1295_001:0475a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼花不待眼撥而胸領。",
        "from": "X65n1295_001:0475a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果不待枚舉而髓味。",
        "from": "X65n1295_001:0475a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之實悟實參。",
        "from": "X65n1295_001:0475a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假泛而覽暫而嘗。",
        "from": "X65n1295_001:0475a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倉卒莫辨其為何者決定。",
        "from": "X65n1295_001:0475a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則亦尋常孟浪之布襪青行纏耳。",
        "from": "X65n1295_001:0475a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾謂智有利鈍故解有疾遲。",
        "from": "X65n1295_001:0475a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見有淺深故思有工拙。",
        "from": "X65n1295_001:0475a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬之天涯芳草王孫經目。",
        "from": "X65n1295_001:0475a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共知風光流轉不涉蔾沙。",
        "from": "X65n1295_001:0475a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特於芊綿錯雜之叢。",
        "from": "X65n1295_001:0475a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨能望而名。",
        "from": "X65n1295_001:0475a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為荃為蘅為芷為[卄/(〡*臣)]。",
        "from": "X65n1295_001:0475a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯則名為六合一薢茩之真賞識。",
        "from": "X65n1295_001:0475a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不然鼻端普嗅種種清芣膚頰小差。",
        "from": "X65n1295_001:0475a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終未是離騷注脚下具眼本色。",
        "from": "X65n1295_001:0475a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然掩舌摩竭。",
        "from": "X65n1295_001:0475a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別相空。",
        "from": "X65n1295_001:0475a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杜口毗耶。",
        "from": "X65n1295_001:0475a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言語道斷。",
        "from": "X65n1295_001:0475a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者無說。",
        "from": "X65n1295_001:0475a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我乃無聞。",
        "from": "X65n1295_001:0475a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他日禪林。",
        "from": "X65n1295_001:0475a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覿面相呈。",
        "from": "X65n1295_001:0475a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交手付與家珍。",
        "from": "X65n1295_001:0475a23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回首密在汝邊。",
        "from": "X65n1295_001:0475a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衲衣下一抖擻。",
        "from": "X65n1295_001:0475a24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿傾僧寶人人滄海珠矣。",
        "from": "X65n1295_001:0475a24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奚聯之云書以為序。",
        "from": "X65n1295_001:0475b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 禪宗頌古聯珠通集序",
        "from": "X65n1295_001:0475b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫鼻祖西來。",
        "from": "X65n1295_001:0475b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不立文字直指而已。",
        "from": "X65n1295_001:0475b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時門人又有所謂不執文字不離文字而為道用。",
        "from": "X65n1295_001:0475b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已向第二機矣。",
        "from": "X65n1295_001:0475b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有汝得吾皮之記。",
        "from": "X65n1295_001:0475b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道不在言也審矣。",
        "from": "X65n1295_001:0475b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子以為何如。",
        "from": "X65n1295_001:0475b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰非也。",
        "from": "X65n1295_001:0475b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道雖不在於言。",
        "from": "X65n1295_001:0475b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言而當終日言。",
        "from": "X65n1295_001:0475b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於道庸何傷。",
        "from": "X65n1295_001:0475b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "否則一語猶以為贅也。",
        "from": "X65n1295_001:0475b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰自一華敷而五葉聯芳。",
        "from": "X65n1295_001:0475b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方世傳而兩派支衍。",
        "from": "X65n1295_001:0475b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機緣公案五燈燁。",
        "from": "X65n1295_001:0475b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如諸祖相繼。",
        "from": "X65n1295_001:0475b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有拈古焉。",
        "from": "X65n1295_001:0475b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有頌古焉。",
        "from": "X65n1295_001:0475b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈古則見之於八方珠玉類要等集。",
        "from": "X65n1295_001:0475b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌古則有寶鑑大師。",
        "from": "X65n1295_001:0475b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋淳熈間居池陽報恩。",
        "from": "X65n1295_001:0475b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採集佛祖。",
        "from": "X65n1295_001:0475b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至茶陵機緣。",
        "from": "X65n1295_001:0475b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡三百二十有五則頌古。",
        "from": "X65n1295_001:0475b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗師一百二十有二人。",
        "from": "X65n1295_001:0475b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌二千一百首。",
        "from": "X65n1295_001:0475b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目之曰禪宗頌古聯珠。",
        "from": "X65n1295_001:0475b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叢林尚之而板將漫滅。",
        "from": "X65n1295_001:0475b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因念淳熈至今垂二百載。",
        "from": "X65n1295_001:0475b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其間負大名尊宿星布林立。",
        "from": "X65n1295_001:0475b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌古亦不下先哲。",
        "from": "X65n1295_001:0475b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜乎聯繼之作闕如也。",
        "from": "X65n1295_001:0475b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每慚濫廁宗門。",
        "from": "X65n1295_001:0475b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且有年矣。",
        "from": "X65n1295_001:0475b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪無所悟。",
        "from": "X65n1295_001:0475b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道無所詣。",
        "from": "X65n1295_001:0475b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲作之復止之。",
        "from": "X65n1295_001:0475b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趑趄者亦屢矣。",
        "from": "X65n1295_001:0475b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元貞乙未。",
        "from": "X65n1295_001:0475b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叨尸義烏普濟山院。",
        "from": "X65n1295_001:0475b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事簡輒事續稾。",
        "from": "X65n1295_001:0475b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僅得一二。",
        "from": "X65n1295_001:0475b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萍梗之踪。",
        "from": "X65n1295_001:0475b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或出或處。",
        "from": "X65n1295_001:0475b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨見隨筆。",
        "from": "X65n1295_001:0475b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十三四年間稍成次序。",
        "from": "X65n1295_001:0475b24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機緣先有者頌則續之。",
        "from": "X65n1295_001:0475b24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有者增之加機緣。",
        "from": "X65n1295_001:0475c01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又四百九十又三則。",
        "from": "X65n1295_001:0475c01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗師四百二十六人。",
        "from": "X65n1295_001:0475c02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌三千丹五十首。",
        "from": "X65n1295_001:0475c02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "題曰禪宗頌古聯珠通集。",
        "from": "X65n1295_001:0475c02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將募板行與後學共惑者。",
        "from": "X65n1295_001:0475c03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰道不在是。",
        "from": "X65n1295_001:0475c03_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈華微笑三拜得髓。",
        "from": "X65n1295_001:0475c04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初無一語與之。",
        "from": "X65n1295_001:0475c04_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而昭昭於心目之間。",
        "from": "X65n1295_001:0475c04_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道播無垠。",
        "from": "X65n1295_001:0475c05_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏有如今日叶音韻事言句簧鼓。",
        "from": "X65n1295_001:0475c05_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後人俾其棄本逐末。",
        "from": "X65n1295_001:0475c06_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠可歎哉。",
        "from": "X65n1295_001:0475c06_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予笑而不答。",
        "from": "X65n1295_001:0475c06_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良久乃歌曰。",
        "from": "X65n1295_001:0475c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五雲影裏神僊現。",
        "from": "X65n1295_001:0475c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手把紅羅扇遮面。",
        "from": "X65n1295_001:0475c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急須著眼看僊人。",
        "from": "X65n1295_001:0475c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫看僊人手中扇。",
        "from": "X65n1295_001:0475c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而謂之曰。",
        "from": "X65n1295_001:0475c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子所論者手中扇也。",
        "from": "X65n1295_001:0475c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予所集者果在扇邪。",
        "from": "X65n1295_001:0475c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噫知我罪我其惟此集乎。",
        "from": "X65n1295_001:0475c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旹延祐戊午六月旦。",
        "from": "X65n1295_001:0475c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前住紹興路天衣萬壽禪寺。",
        "from": "X65n1295_001:0475c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錢唐沙門普會自序。",
        "from": "X65n1295_001:0475c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 重刻禪宗頌古聯珠通集序",
        "from": "X65n1295_001:0475c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖葛藤。",
        "from": "X65n1295_001:0475c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水浸不爛。",
        "from": "X65n1295_001:0475c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火燒不壞。",
        "from": "X65n1295_001:0475c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枝聯蔓衍。",
        "from": "X65n1295_001:0475c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流布無窮。",
        "from": "X65n1295_001:0475c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪宗頌古聯珠通集者。",
        "from": "X65n1295_001:0475c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魯菴會公集成。",
        "from": "X65n1295_001:0475c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鋟梓行世久矣。",
        "from": "X65n1295_001:0475c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近以他故其板散落人間。",
        "from": "X65n1295_001:0475c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪武己巳夏。",
        "from": "X65n1295_001:0475c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余慮其亡失。",
        "from": "X65n1295_001:0475c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "託道友收贖。",
        "from": "X65n1295_001:0475c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庋藏於大慈山之幻居。",
        "from": "X65n1295_001:0475c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實六月二十八日也。",
        "from": "X65n1295_001:0475c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日舊置板處。",
        "from": "X65n1295_001:0475c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火作風烈。",
        "from": "X65n1295_001:0475c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燎及千數百家。",
        "from": "X65n1295_001:0475c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吁斯亦異矣。",
        "from": "X65n1295_001:0475c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然佛祖葛藤。",
        "from": "X65n1295_001:0475c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其果靈驗如此耶。",
        "from": "X65n1295_001:0475c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抑神物護持而致然耶。",
        "from": "X65n1295_001:0475c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬捐衣資命工補完。",
        "from": "X65n1295_001:0476a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用廣流通永延慧命。",
        "from": "X65n1295_001:0476a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因書其得板所由之異。",
        "from": "X65n1295_001:0476a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庸識歲月云。",
        "from": "X65n1295_001:0476a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪武壬申春二月中天竺住山沙門　淨戒　識 禪宗頌古聯珠舊序寧武軍承宣使提舉隆興府玉隆萬壽宮武功郡開國矦張掄　撰西方聖人為一大事因緣故出現於世。",
        "from": "X65n1295_001:0476a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後以正法眼藏付囑迦葉。",
        "from": "X65n1295_001:0476a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳至二十七世。",
        "from": "X65n1295_001:0476a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而達磨入于中夏。",
        "from": "X65n1295_001:0476a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設大法藥。",
        "from": "X65n1295_001:0476a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開甘露門。",
        "from": "X65n1295_001:0476a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直接上根。",
        "from": "X65n1295_001:0476a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不立文字。",
        "from": "X65n1295_001:0476a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逮今六百餘年。",
        "from": "X65n1295_001:0476a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲菩提者不可勝數。",
        "from": "X65n1295_001:0476a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖其心以無傳而傳。",
        "from": "X65n1295_001:0476a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其法以無說而說。",
        "from": "X65n1295_001:0476a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然機緣偈頌前後寖多。",
        "from": "X65n1295_001:0476a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉句金章公案具在。",
        "from": "X65n1295_001:0476a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池州報恩寶鑑大師法應。",
        "from": "X65n1295_001:0476a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞因禪悅餘暇。",
        "from": "X65n1295_001:0476a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裒集採摭。",
        "from": "X65n1295_001:0476a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由佛世尊以至古今宗師。",
        "from": "X65n1295_001:0476a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡得機緣三百廿五則。",
        "from": "X65n1295_001:0476a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌古一百廿二人。",
        "from": "X65n1295_001:0476a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目之禪宗頌古聯珠集。",
        "from": "X65n1295_001:0476a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂毗盧藏內全收眾珍。",
        "from": "X65n1295_001:0476a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旃檀林中莫非香木。",
        "from": "X65n1295_001:0476a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開悟知見利益後來。",
        "from": "X65n1295_001:0476a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鋟木流通豈曰小補。",
        "from": "X65n1295_001:0476a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以予夙慕宗乘樂推法施。",
        "from": "X65n1295_001:0476a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請為序引。",
        "from": "X65n1295_001:0476a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不獲固辭。",
        "from": "X65n1295_001:0476a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳熈歲在屠維大淵獻。",
        "from": "X65n1295_001:0476a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冬十一月序。",
        "from": "X65n1295_001:0476a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": " 禪宗頌古聯珠舊集本序",
        "from": "X65n1295_001:0476b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋池州報恩光孝禪寺傳法寶鑑大師法應述灋應自昔南遊訪道。",
        "from": "X65n1295_001:0476b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪燕之暇集諸頌古。",
        "from": "X65n1295_001:0476b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咨參知識。",
        "from": "X65n1295_001:0476b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所聞持同學討論。",
        "from": "X65n1295_001:0476b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去取校定三十餘年。",
        "from": "X65n1295_001:0476b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採摭機緣三百二十五則。",
        "from": "X65n1295_001:0476b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌二千一百首。",
        "from": "X65n1295_001:0476b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗師一百二十二人。",
        "from": "X65n1295_001:0476b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "編排成帙。",
        "from": "X65n1295_001:0476b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命名禪宗頌古聯珠集。",
        "from": "X65n1295_001:0476b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願與天下學般若菩薩共之。",
        "from": "X65n1295_001:0476b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖佛祖不傳之妙不可得而名言。",
        "from": "X65n1295_001:0476b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初無字書安有密語。",
        "from": "X65n1295_001:0476b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨機直指更不覆藏。",
        "from": "X65n1295_001:0476b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹見當人本來面目故。",
        "from": "X65n1295_001:0476b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛以一大事因緣出現於世。",
        "from": "X65n1295_001:0476b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬喻言詞說法開示。",
        "from": "X65n1295_001:0476b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令眾生悟佛知見。",
        "from": "X65n1295_001:0476b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈徒然哉。",
        "from": "X65n1295_001:0476b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池陽信士裒金刻板。",
        "from": "X65n1295_001:0476b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以廣見聞。",
        "from": "X65n1295_001:0476b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為大法光明之施。",
        "from": "X65n1295_001:0476b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳熙二年乙未臘八日。",
        "from": "X65n1295_001:0476b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "編次謹書。",
        "from": "X65n1295_001:0476b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪宗頌古聯珠通集卷第一",
        "from": "X65n1295_001:0476b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪宗頌古聯珠通集目錄",
        "from": "X65n1295_001:0476b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷第一",
        "from": "X65n1295_001:0476b21_0",
        "context_with_next_sentence": true
