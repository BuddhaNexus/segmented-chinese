[
    {
        "source_sentence": "大方廣佛華嚴經海印道場十重行願常徧禮懺儀卷第四十一唐　蘭山雲巖慈恩寺護法國師行沙門慧覺依經錄宋　蒼山載光寺沙門普瑞補註明　欽褒忠義忠藎四川布政佛弟子木增訂正雞山寂光寺沙門讀徹參閱天台習教觀沙門正止治定第四十一晌次本末無礙會一切恭敬敬禮無盡三寶。",
        "from": "X74n1470_041:0348b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸眾等人各胡跪。",
        "from": "X74n1470_041:0348b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴持香華。",
        "from": "X74n1470_041:0348b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法供養。",
        "from": "X74n1470_041:0348b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願此供海雲。",
        "from": "X74n1470_041:0348b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧滿十方界。",
        "from": "X74n1470_041:0348b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶眾生。",
        "from": "X74n1470_041:0348b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡能攝持無上法寶。",
        "from": "X74n1470_041:0348b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶身。",
        "from": "X74n1470_041:0348b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足無量功德妙寶。",
        "from": "X74n1470_041:0348b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶口。",
        "from": "X74n1470_041:0348b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常演一切妙法寶音。",
        "from": "X74n1470_041:0348b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶心。",
        "from": "X74n1470_041:0348c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具清淨意大願智寶。",
        "from": "X74n1470_041:0348c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶念。",
        "from": "X74n1470_041:0348c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷諸愚惑。",
        "from": "X74n1470_041:0348c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟堅固一切智。",
        "from": "X74n1470_041:0348c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶明。",
        "from": "X74n1470_041:0348c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持一切諸佛法寶。",
        "from": "X74n1470_041:0348c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶慧。",
        "from": "X74n1470_041:0348c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決了一切諸佛法藏。",
        "from": "X74n1470_041:0348c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶智。",
        "from": "X74n1470_041:0348c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大圓滿一切智寶。",
        "from": "X74n1470_041:0348c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶眼鑒十方寶。",
        "from": "X74n1470_041:0348c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所障礙。",
        "from": "X74n1470_041:0348c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶耳。",
        "from": "X74n1470_041:0348c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽聞無量盡界法聲。",
        "from": "X74n1470_041:0348c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨無礙。",
        "from": "X74n1470_041:0348c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶鼻。",
        "from": "X74n1470_041:0348c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常齅隨順清淨寶香。",
        "from": "X74n1470_041:0348c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶。",
        "from": "X74n1470_041:0348c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌能說無量諸語言法。",
        "from": "X74n1470_041:0348c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶足。",
        "from": "X74n1470_041:0348c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧遊十方。",
        "from": "X74n1470_041:0348c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無&#;礙。",
        "from": "X74n1470_041:0348c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶意。",
        "from": "X74n1470_041:0348c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常勤修於普賢行願。",
        "from": "X74n1470_041:0348c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶音。",
        "from": "X74n1470_041:0348c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨妙音聲。",
        "from": "X74n1470_041:0348c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧十方界。",
        "from": "X74n1470_041:0348c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶身業。",
        "from": "X74n1470_041:0348c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所作。",
        "from": "X74n1470_041:0348c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以智為首。",
        "from": "X74n1470_041:0348c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶語業。",
        "from": "X74n1470_041:0348c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常說修行無礙智寶。",
        "from": "X74n1470_041:0348c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿僧祇寶意業。",
        "from": "X74n1470_041:0348c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得無障礙廣大智寶。",
        "from": "X74n1470_041:0348c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟圓滿。",
        "from": "X74n1470_041:0348c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至如是香莊嚴。",
        "from": "X74n1470_041:0348c11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華莊嚴。",
        "from": "X74n1470_041:0348c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬘莊嚴。",
        "from": "X74n1470_041:0348c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香莊嚴。",
        "from": "X74n1470_041:0348c12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香莊嚴。",
        "from": "X74n1470_041:0348c12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末香莊嚴。",
        "from": "X74n1470_041:0348c12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣莊嚴。",
        "from": "X74n1470_041:0348c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢莊嚴。",
        "from": "X74n1470_041:0348c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢莊嚴。",
        "from": "X74n1470_041:0348c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幡莊嚴。",
        "from": "X74n1470_041:0348c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼寶莊嚴。",
        "from": "X74n1470_041:0348c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第乃至過此百倍。",
        "from": "X74n1470_041:0348c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉寶莊嚴。",
        "from": "X74n1470_041:0348c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如是等諸供養具。",
        "from": "X74n1470_041:0348c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常作供養。",
        "from": "X74n1470_041:0348c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝網重重。",
        "from": "X74n1470_041:0348c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩賢聖海眾。",
        "from": "X74n1470_041:0348c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受此供養雲。",
        "from": "X74n1470_041:0348c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為光明臺。",
        "from": "X74n1470_041:0348c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣於無邊界。",
        "from": "X74n1470_041:0348c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無盡。",
        "from": "X74n1470_041:0348c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願作佛事。",
        "from": "X74n1470_041:0348c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養已。",
        "from": "X74n1470_041:0348c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切恭敬。",
        "from": "X74n1470_041:0348c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次奉施寶錯呪",
        "from": "X74n1470_041:0348c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　寶珠自性廣大海　　七寶山等最殊勝　出興如斯供養雲　　諸佛等處我奉獻唵薩[口*栗]末怛達遏怛囉得捺布桚銘遏薩摩[口*能]囉悉癹囉捺薩麻英吽寶錯經云。",
        "from": "X74n1470_041:0348c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一總持名無量種呪。",
        "from": "X74n1470_041:0348c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆能成就具大功能。",
        "from": "X74n1470_041:0348c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持曰。",
        "from": "X74n1470_041:0348c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵悉麻囉悉麻囉眉麻捺悉葛囉麻曷令[口*(椔-田+夕)]斡吽次結廣大不空摩尼印呪(結即同前)唵啞麼遏布[口*(椔-田+夕)]麻禰巴能麻末唧呤怛達遏怛眉浪雞矴薩慢怛不囉薩囉吽梵音讚佛　佛身無有生　　而能示出生　　法性如虗空　諸佛於中住　　此會諸聖賢　　入佛難思地　一一皆能現　　一切佛神力　　智身能遍入　一切剎微塵　　見身在彼中　　普見於諸佛直言讚佛　三世一切諸如來　　皆悉從於信心生　以具廣大清淨眼　　能見一切諸佛海　汝應觀佛無垢身　　妙相莊嚴悉清淨　徧坐道場眾會中　　示現神道無不徧　毗盧遮那善逝尊　　道樹降魔成正覺　隨於一切眾生心　　轉大法輪徧法界　佛證甚深真法性　　妙體寂靜無差別　色身清淨具莊嚴　　普示眾生無有盡　佛身廣大不思議　　周徧法界常不盡　平等普現於十方　　一切剎土無不見南無大方廣佛華嚴經中華藏世界海十身無礙本尊毗盧遮那佛南無大慈大悲五百誓願五濁救苦釋迦牟尼佛南無東方滿月世界十二上願五濁救苦藥師琉璃光王佛南無西方極樂世界四十八願五濁救苦阿彌陀佛南無十方三世盡虗空界微塵剎土中大方廣佛華嚴經圓滿教海南無大方廣佛華嚴經中主於行願真理普賢菩薩摩訶薩南無大方廣佛華嚴經中主於信解證智文殊師利菩薩摩訶薩南無大慈大悲五濁救苦千手千眼觀世音菩薩摩訶薩南無大願弘深五濁救苦出無佛世安慰人心常住燄魔羅界地藏王菩薩摩訶薩南無十方三世盡虗空界微塵剎土中十信菩薩十住菩薩十行菩薩十迴向菩薩十地菩薩等覺菩薩徧法界剎海微塵數菩薩一切海眾南無大方廣佛華嚴經末會中修證五相處五十五聖者南無大方廣佛華嚴經末會中圓器上根百城求法一生之內菩薩行圓為末世頓門修證軌範善財菩薩摩訶薩南無十方三世盡虗空界微塵剎土中法身色身形相舍利寶塔寺宇一切佛事又於法藏及講法處菩薩賢聖一切海眾南無大願摜甲求生淨土末濁憂國護持正法護法國師至心歸命禮大方廣佛華嚴經華藏世界海本尊毗盧遮那佛　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中初佛之勝德難思(分三)一誡聽許說經云爾時普賢菩薩摩訶薩(至)未曾分別起想念。",
        "from": "X74n1470_041:0349a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願共諸眾生　　往生華藏海　　極樂淨土中二渴仰欲聞經云爾時諸菩薩聞此說已(至)作是念已深生渴仰。",
        "from": "X74n1470_041:0349c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願共諸眾生　　往生華藏海　　極樂淨土中三廣說德相(分二)○初重誡許說經云爾時普賢菩薩(至)一滴之相即說頌言。",
        "from": "X74n1470_041:0349c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後廣顯佛德難思(此下二十種無盡功德)初彼所知中一向無障轉功德佛智廣大同虗空(至)念念示現無邊事。",
        "from": "X74n1470_041:0349c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二有無二相真如最清淨能入功德",
        "from": "X74n1470_041:0349c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨眾生心種種行(至)而佛本來無動念。",
        "from": "X74n1470_041:0349c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三無功用佛事不休息功德",
        "from": "X74n1470_041:0349c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有處處見佛坐(至)心不淨故不聞者。",
        "from": "X74n1470_041:0349c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四即於法身中所依意樂作事無差別功德或見清淨大菩薩(至)於中覺悟成菩提。",
        "from": "X74n1470_041:0349c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或見蓮華勝妙剎(至)皆悉勤修普賢行。",
        "from": "X74n1470_041:0350a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或有見佛無量壽(至)充滿十方諸世界。",
        "from": "X74n1470_041:0350a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或有見此三千界(至)及如香象諸菩薩。",
        "from": "X74n1470_041:0350a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或見月覺大名稱(至)普徧十方清淨剎。",
        "from": "X74n1470_041:0350a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或見日藏世所尊(至)充滿十方而說法。",
        "from": "X74n1470_041:0350a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或見金剛大焰佛(至)說法除滅眾生翳。",
        "from": "X74n1470_041:0350a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中一一毛端不可說(至)種種說法度眾生。",
        "from": "X74n1470_041:0350b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或有觀見一毛孔(至)清淨佛子皆充滿。",
        "from": "X74n1470_041:0350b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十力盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或有見一微塵內(至)不可說劫修諸行。",
        "from": "X74n1470_041:0350b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或有見一毛端處(至)毗盧遮那轉法輪。",
        "from": "X74n1470_041:0350b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(眾和)　彼佛菩薩處",
        "from": "X74n1470_041:0350b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中或見世界不清淨(至)我說少分汝當聽。",
        "from": "X74n1470_041:0350b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五修一切障對治功德",
        "from": "X74n1470_041:0350b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見釋迦成佛道(至)隨眾生心皆示現。",
        "from": "X74n1470_041:0350b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六降伏一切外道功德",
        "from": "X74n1470_041:0350b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見究竟波羅蜜(至)猶如幻師現眾像。",
        "from": "X74n1470_041:0350b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七生在世間不為世法所礙功德",
        "from": "X74n1470_041:0350c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見兜率始降神(至)隨眾生心皆示現。",
        "from": "X74n1470_041:0350c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八安立正法功德",
        "from": "X74n1470_041:0350c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來住於無上道(至)普照世界除煩惱。",
        "from": "X74n1470_041:0350c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九授記功德",
        "from": "X74n1470_041:0350c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足清淨功德智(至)隨所應化示佛道。",
        "from": "X74n1470_041:0350c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十示現受用變化身功德",
        "from": "X74n1470_041:0350c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究竟虗空十方界(至)現斯苦行摧異道。",
        "from": "X74n1470_041:0350c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一斷一切疑功德",
        "from": "X74n1470_041:0350c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或持彼戒為世師(至)方便皆令住佛道。",
        "from": "X74n1470_041:0350c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二令入種種行功德",
        "from": "X74n1470_041:0350c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現上服以嚴身(至)然後捨去無知者。",
        "from": "X74n1470_041:0350c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三當來世生妙智功德",
        "from": "X74n1470_041:0350c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來無礙智所見(至)種種教化令成就。",
        "from": "X74n1470_041:0350c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四隨其勝解示現功德",
        "from": "X74n1470_041:0350c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如幻師善幻術(至)靡不於中現其像。",
        "from": "X74n1470_041:0350c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五無量所依調伏有情加行功德",
        "from": "X74n1470_041:0350c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如淨日放千光(至)普使滅除三毒火。",
        "from": "X74n1470_041:0350c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六平等法身波羅蜜多成滿功德",
        "from": "X74n1470_041:0350c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來清淨妙法身(至)當於佛體如是觀。",
        "from": "X74n1470_041:0350c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七隨其勝解示現差別佛土功德",
        "from": "X74n1470_041:0350c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界有無一切法(至)無有依空而住者。",
        "from": "X74n1470_041:0350c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八三種佛身六住無分限功德",
        "from": "X74n1470_041:0350c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海摩尼無量色(至)隨應而現無所住。",
        "from": "X74n1470_041:0350c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九究竟功德等三種功德",
        "from": "X74n1470_041:0351a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗空真如及實際(至)可以顯示於如來。",
        "from": "X74n1470_041:0351a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後結德無盡",
        "from": "X74n1470_041:0351a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎塵心念可數知(至)慎勿於此懷疑念。",
        "from": "X74n1470_041:0351a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願共諸眾生　　往生華藏海　　極樂淨土中至心歸命禮大方廣佛華嚴經華藏世界海本尊毗盧遮那佛南無十身無礙毗盧遮那如來道場一切海南無大方廣佛華嚴經中普賢行願品法門　十方盡歸命　　滅罪增淨信　　願生華藏海　極樂淨土中●入不思議解脫境界普賢行願品經云爾時普賢菩薩(至)十者普皆迴向。",
        "from": "X74n1470_041:0351a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一禮敬諸佛",
        "from": "X74n1470_041:0351a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云善財白言大聖(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮敬已。",
        "from": "X74n1470_041:0351a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二稱讚如來",
        "from": "X74n1470_041:0351a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言稱讚如來者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎已。",
        "from": "X74n1470_041:0351a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三廣修供養",
        "from": "X74n1470_041:0351a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言廣修供養者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養已。",
        "from": "X74n1470_041:0351a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四懺悔業障",
        "from": "X74n1470_041:0351a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言懺除業障者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔已。",
        "from": "X74n1470_041:0351b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五隨喜功德",
        "from": "X74n1470_041:0351b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次男子言隨喜功德者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜已。",
        "from": "X74n1470_041:0351b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六請轉法輪",
        "from": "X74n1470_041:0351b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言請轉法輪者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請轉已。",
        "from": "X74n1470_041:0351b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七請佛住世",
        "from": "X74n1470_041:0351b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言請佛住世者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請已。",
        "from": "X74n1470_041:0351b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八常隨佛學",
        "from": "X74n1470_041:0351b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言常隨佛學者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨學已。",
        "from": "X74n1470_041:0351b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九恒順眾生",
        "from": "X74n1470_041:0351b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言恒順眾生者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒順已。",
        "from": "X74n1470_041:0351b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十普皆迴向",
        "from": "X74n1470_041:0351b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子言普皆迴向者(至)身語意業無有疲厭。",
        "from": "X74n1470_041:0351b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向已。",
        "from": "X74n1470_041:0351b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0351b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云善男子是為菩薩(至)皆大歡喜信受奉行。",
        "from": "X74n1470_041:0351b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願共諸眾生　　往生華藏海　　極樂淨土中至心發願惟願我等修習普賢十重無盡行願功德故。",
        "from": "X74n1470_041:0351b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速能除滅五無間業。",
        "from": "X74n1470_041:0351b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有世間身心等病。",
        "from": "X74n1470_041:0351b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種苦惱。",
        "from": "X74n1470_041:0351b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至佛剎極微塵數一切惡業。",
        "from": "X74n1470_041:0351b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得消除。",
        "from": "X74n1470_041:0351c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔軍夜叉羅剎。",
        "from": "X74n1470_041:0351c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若鳩盤茶。",
        "from": "X74n1470_041:0351c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若毗舍闍。",
        "from": "X74n1470_041:0351c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若布多等。",
        "from": "X74n1470_041:0351c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲血噉肉諸惡鬼神。",
        "from": "X74n1470_041:0351c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉遠離。",
        "from": "X74n1470_041:0351c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時發心。",
        "from": "X74n1470_041:0351c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近守護。",
        "from": "X74n1470_041:0351c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故若人誦此願者。",
        "from": "X74n1470_041:0351c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行於世間。",
        "from": "X74n1470_041:0351c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有障礙。",
        "from": "X74n1470_041:0351c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如空中月。",
        "from": "X74n1470_041:0351c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出於雲翳。",
        "from": "X74n1470_041:0351c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩之所稱讚。",
        "from": "X74n1470_041:0351c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切人天。",
        "from": "X74n1470_041:0351c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆應禮敬。",
        "from": "X74n1470_041:0351c05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生。",
        "from": "X74n1470_041:0351c05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉應供養。",
        "from": "X74n1470_041:0351c05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此善男子。",
        "from": "X74n1470_041:0351c06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得人身。",
        "from": "X74n1470_041:0351c06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿普現所有功德。",
        "from": "X74n1470_041:0351c06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當如普賢菩薩。",
        "from": "X74n1470_041:0351c06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速得成就。",
        "from": "X74n1470_041:0351c07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙色身。",
        "from": "X74n1470_041:0351c07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具三十二大丈夫相。",
        "from": "X74n1470_041:0351c07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生人天所在之處。",
        "from": "X74n1470_041:0351c08_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常居勝族。",
        "from": "X74n1470_041:0351c08_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能破壞一切惡趣。",
        "from": "X74n1470_041:0351c08_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能遠離一切惡友。",
        "from": "X74n1470_041:0351c09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能制伏一切外道。",
        "from": "X74n1470_041:0351c09_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能解脫一切煩惱。",
        "from": "X74n1470_041:0351c09_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如師子王。",
        "from": "X74n1470_041:0351c10_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧伏群獸。",
        "from": "X74n1470_041:0351c10_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪受一切眾生供養。",
        "from": "X74n1470_041:0351c10_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復是人臨命終時。",
        "from": "X74n1470_041:0351c11_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後剎那。",
        "from": "X74n1470_041:0351c11_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸根。",
        "from": "X74n1470_041:0351c11_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆散壞一切親屬。",
        "from": "X74n1470_041:0351c11_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆捨離一切威勢。",
        "from": "X74n1470_041:0351c12_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆退失輔相大臣宮城內外象馬車乘。",
        "from": "X74n1470_041:0351c12_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珍寶伏藏。",
        "from": "X74n1470_041:0351c13_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切。",
        "from": "X74n1470_041:0351c13_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無復相隨。",
        "from": "X74n1470_041:0351c13_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟此願王。",
        "from": "X74n1470_041:0351c14_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相捨離。",
        "from": "X74n1470_041:0351c14_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切時。",
        "from": "X74n1470_041:0351c14_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引導其前。",
        "from": "X74n1470_041:0351c14_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一剎那中。",
        "from": "X74n1470_041:0351c14_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得往生極樂世界。",
        "from": "X74n1470_041:0351c15_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到已即見阿彌陀佛。",
        "from": "X74n1470_041:0351c15_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利菩薩。",
        "from": "X74n1470_041:0351c15_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩。",
        "from": "X74n1470_041:0351c16_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩。",
        "from": "X74n1470_041:0351c16_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩等。",
        "from": "X74n1470_041:0351c16_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸菩薩。",
        "from": "X74n1470_041:0351c16_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色相端嚴。",
        "from": "X74n1470_041:0351c17_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德具足。",
        "from": "X74n1470_041:0351c17_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所共圍遶。",
        "from": "X74n1470_041:0351c17_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人自在。",
        "from": "X74n1470_041:0351c17_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生蓮華中。",
        "from": "X74n1470_041:0351c17_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙佛授記。",
        "from": "X74n1470_041:0351c18_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得受記已。",
        "from": "X74n1470_041:0351c18_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經於無數百千萬億那由他劫。",
        "from": "X74n1470_041:0351c18_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普於十方不可說不可說世界。",
        "from": "X74n1470_041:0351c19_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以智慧力。",
        "from": "X74n1470_041:0351c19_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨眾生心。",
        "from": "X74n1470_041:0351c19_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為利益。",
        "from": "X74n1470_041:0351c20_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當坐菩提道場。",
        "from": "X74n1470_041:0351c20_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏魔軍。",
        "from": "X74n1470_041:0351c20_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成等正覺。",
        "from": "X74n1470_041:0351c20_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉妙法輪。",
        "from": "X74n1470_041:0351c21_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令佛剎極微塵數世界眾生。",
        "from": "X74n1470_041:0351c21_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心。",
        "from": "X74n1470_041:0351c21_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其根性。",
        "from": "X74n1470_041:0351c22_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教化成熟。",
        "from": "X74n1470_041:0351c22_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至盡於未來劫海。",
        "from": "X74n1470_041:0351c22_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣能利益一切眾生。",
        "from": "X74n1470_041:0351c22_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是虗空界盡。",
        "from": "X74n1470_041:0351c23_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生界盡。",
        "from": "X74n1470_041:0351c23_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生業盡。",
        "from": "X74n1470_041:0351c23_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生煩惱盡。",
        "from": "X74n1470_041:0351c23_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我此發願。",
        "from": "X74n1470_041:0351c24_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有窮盡。",
        "from": "X74n1470_041:0351c24_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念相續。",
        "from": "X74n1470_041:0351c24_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有間斷。",
        "from": "X74n1470_041:0351c24_90",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身語意業。",
        "from": "X74n1470_041:0352a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有疲厭。",
        "from": "X74n1470_041:0352a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願已。",
        "from": "X74n1470_041:0352a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0352a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次懺悔滅罪印呪",
        "from": "X74n1470_041:0352a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩栗末(二合)巴(引)巴眉悉普怛[口*捺]曷捺末日囉也莎曷(應誦三徧)　百劫積集所　　一念悉盪除　　如火焚枯草　滅盡無有餘　我昔所造諸惡業　　皆由無始貪瞋癡　從身語意之所生　　一切我今皆懺悔懺悔已。",
        "from": "X74n1470_041:0352a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命禮本尊毗盧遮那佛。",
        "from": "X74n1470_041:0352a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○(白)眾等聽說經中無常偈",
        "from": "X74n1470_041:0352a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　生者皆歸死　　容顏盡變衰　　強力病所侵　無能免斯者　　假使妙高山　　劫盡皆壞散　大海深無底　　亦復皆枯竭　　大地及日月　時至皆歸盡　　未曾有一法　　不被無常吞　上從非想處　　下至轉輪王　　七寶鎮隨身　千子常圍遶　　如其壽命盡　　須臾不暫停　還漂生死海　　隨緣受眾苦啟白賢聖　仰白十身徧照佛　　華藏世界諸如來　娑婆本師釋迦尊　　普賢文殊諸上首　剎海聖眾并徒眾　　華藏會上諸上人　釋梵諸天眾類神　　獲得他心道眼者　竝願不捨慈悲力　　證得我等二眾人　為修行願總持門　　某時至心同禮懺所生功德。",
        "from": "X74n1470_041:0352a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總用莊嚴法界。",
        "from": "X74n1470_041:0352b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎海眾生。",
        "from": "X74n1470_041:0352b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當願天仙。",
        "from": "X74n1470_041:0352b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墜悟著樂。",
        "from": "X74n1470_041:0352b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而非常國土清平識真乘。",
        "from": "X74n1470_041:0352b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而是勝群僚。",
        "from": "X74n1470_041:0352b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常居祿位。",
        "from": "X74n1470_041:0352b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆欣圓頓教門。",
        "from": "X74n1470_041:0352b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人民永保安寧。",
        "from": "X74n1470_041:0352b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸修覺照之道。",
        "from": "X74n1470_041:0352b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師僧父母。",
        "from": "X74n1470_041:0352b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福慶汪洋。",
        "from": "X74n1470_041:0352b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信施檀那。",
        "from": "X74n1470_041:0352b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬行圓滿。",
        "from": "X74n1470_041:0352b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三途俱時離苦八難。",
        "from": "X74n1470_041:0352b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竝悉消除。",
        "from": "X74n1470_041:0352b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑊湯變為清涼池。",
        "from": "X74n1470_041:0352b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵牀變作蓮華座。",
        "from": "X74n1470_041:0352b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息悲痛之響。",
        "from": "X74n1470_041:0352b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同念佛之音。",
        "from": "X74n1470_041:0352b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人人有返本之心。",
        "from": "X74n1470_041:0352b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各悉還源之照。",
        "from": "X74n1470_041:0352b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常發今願當願。",
        "from": "X74n1470_041:0352b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱不退心觀行。",
        "from": "X74n1470_041:0352b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令成同證。",
        "from": "X74n1470_041:0352b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴海會。",
        "from": "X74n1470_041:0352b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為上良緣。",
        "from": "X74n1470_041:0352b09_16",
        "context_with_next_sentence": true
