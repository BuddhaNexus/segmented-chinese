        "from": "T19n1022A_001:0711c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從朽塔處有七寶窣堵波自然涌出。",
        "from": "T19n1022A_001:0711c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高廣嚴飾莊嚴微妙放大光明。",
        "from": "T19n1022A_001:0712a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼十方九十九百千俱胝那庾多如來。",
        "from": "T19n1022A_001:0712a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來稱讚釋迦牟尼佛各作是言。",
        "from": "T19n1022A_001:0712a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦如來。",
        "from": "T19n1022A_001:0712a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能說如是廣大法要。",
        "from": "T19n1022A_001:0712a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置如是法藏。",
        "from": "T19n1022A_001:0712a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提令諸眾生利樂安隱。",
        "from": "T19n1022A_001:0712a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T19n1022A_001:0712a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安此法要。",
        "from": "T19n1022A_001:0712a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置此陀羅尼於塔像中者。",
        "from": "T19n1022A_001:0712a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等十方諸佛。",
        "from": "T19n1022A_001:0712a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其方處恒常隨逐。",
        "from": "T19n1022A_001:0712a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切時。",
        "from": "T19n1022A_001:0712a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力及誓願力加持護念。",
        "from": "T19n1022A_001:0712a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說此大全身舍利寶篋印陀羅尼。",
        "from": "T19n1022A_001:0712a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作佛事已。",
        "from": "T19n1022A_001:0712a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後往彼婆羅門家。",
        "from": "T19n1022A_001:0712a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸供養。",
        "from": "T19n1022A_001:0712a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無數天人獲大福利已。",
        "from": "T19n1022A_001:0712a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却還所住。",
        "from": "T19n1022A_001:0712a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾比丘比丘尼優婆塞優婆夷天龍夜叉健闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T19n1022A_001:0712a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T19n1022A_001:0712a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來心祕密全身舍利寶篋印陀羅尼經",
        "from": "T19n1022A_001:0712a15_0",
        "context_with_next_sentence": false
    }
]