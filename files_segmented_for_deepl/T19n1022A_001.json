[
    {
        "source_sentence": "一切如來心祕密全身舍利寶篋",
        "from": "T19n1022A_001:0710a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印陀羅尼經",
        "from": "T19n1022A_001:0710a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅",
        "from": "T19n1022A_001:0710a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國公食邑三千戶賜紫贈司空謚",
        "from": "T19n1022A_001:0710a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大鑒正號大廣智大興善寺三",
        "from": "T19n1022A_001:0710a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏沙門不空奉　詔譯",
        "from": "T19n1022A_001:0710a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T19n1022A_001:0710a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時薄伽梵在摩伽陀國無垢園寶光明池中。",
        "from": "T19n1022A_001:0710a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩眾。",
        "from": "T19n1022A_001:0710a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及大聲聞僧。",
        "from": "T19n1022A_001:0710a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍藥叉健闥婆阿蘇羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T19n1022A_001:0710a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量百千眾俱前後圍繞。",
        "from": "T19n1022A_001:0710a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時眾中有一大婆羅門。",
        "from": "T19n1022A_001:0710a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名無垢妙光。",
        "from": "T19n1022A_001:0710a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞聰慧人所樂見。",
        "from": "T19n1022A_001:0710a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常奉十善。",
        "from": "T19n1022A_001:0710a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三寶所決定信向。",
        "from": "T19n1022A_001:0710a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善心慇重智慧微細。",
        "from": "T19n1022A_001:0710a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常欲令一切眾生相應善利。",
        "from": "T19n1022A_001:0710a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大富豐饒資具圓滿。",
        "from": "T19n1022A_001:0710a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼婆羅門無垢妙光。",
        "from": "T19n1022A_001:0710a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起往詣佛所。",
        "from": "T19n1022A_001:0710a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛七匝。",
        "from": "T19n1022A_001:0710a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以眾香花奉獻世尊。",
        "from": "T19n1022A_001:0710a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無價妙衣瓔珞珠鬘持覆佛上。",
        "from": "T19n1022A_001:0710a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足却住一面。",
        "from": "T19n1022A_001:0710a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是請言。",
        "from": "T19n1022A_001:0710a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊與諸大眾。",
        "from": "T19n1022A_001:0710a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日晨朝至我宅中受我供養。",
        "from": "T19n1022A_001:0710a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊默然許之。",
        "from": "T19n1022A_001:0710b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門知佛受請。",
        "from": "T19n1022A_001:0710b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽還所住。",
        "from": "T19n1022A_001:0710b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於是夜廣辦餚饍百味飲食。",
        "from": "T19n1022A_001:0710b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張施殿宇種種莊嚴。",
        "from": "T19n1022A_001:0710b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至明旦已與諸眷屬。",
        "from": "T19n1022A_001:0710b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持眾香花及諸伎樂。",
        "from": "T19n1022A_001:0710b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如來所白言。",
        "from": "T19n1022A_001:0710b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時至願赴我請。",
        "from": "T19n1022A_001:0710b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今正是時。",
        "from": "T19n1022A_001:0710b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂聽許。",
        "from": "T19n1022A_001:0710b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊安慰彼婆羅門無垢妙光已顧視大眾告言。",
        "from": "T19n1022A_001:0710b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等皆應往彼婆羅門家。",
        "from": "T19n1022A_001:0710b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲令彼獲大利故。",
        "from": "T19n1022A_001:0710b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時世尊即從座起。",
        "from": "T19n1022A_001:0710b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔起座已。",
        "from": "T19n1022A_001:0710b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從佛身出種種光明。",
        "from": "T19n1022A_001:0710b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間錯妙色照觸十方。",
        "from": "T19n1022A_001:0710b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆警覺一切。",
        "from": "T19n1022A_001:0710b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來既警覺已。",
        "from": "T19n1022A_001:0710b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後取道。",
        "from": "T19n1022A_001:0710b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門以恭敬心。",
        "from": "T19n1022A_001:0710b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持妙香花與諸眷屬及天龍八部釋梵護世。",
        "from": "T19n1022A_001:0710b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先行治道奉引如來。",
        "from": "T19n1022A_001:0710b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊前路不遠。",
        "from": "T19n1022A_001:0710b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中止一園名曰豐財。",
        "from": "T19n1022A_001:0710b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼園中有古朽塔。",
        "from": "T19n1022A_001:0710b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧壞崩倒荊棘所沒。",
        "from": "T19n1022A_001:0710b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "榛草充遍覆諸礓礫。",
        "from": "T19n1022A_001:0710b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀若土堆。",
        "from": "T19n1022A_001:0710b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊徑往塔所。",
        "from": "T19n1022A_001:0710b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時朽塔上放大光明赫然熾盛。",
        "from": "T19n1022A_001:0710b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於土聚中出善哉聲讚言善哉善哉釋迦牟尼如來今日所行極善境界。",
        "from": "T19n1022A_001:0710b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言。",
        "from": "T19n1022A_001:0710b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝婆羅門。",
        "from": "T19n1022A_001:0710b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於今日獲大善利。",
        "from": "T19n1022A_001:0710b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊禮彼朽塔右遶三匝。",
        "from": "T19n1022A_001:0710b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫身上衣用覆其上。",
        "from": "T19n1022A_001:0710b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泫然垂淚涕泗交流。",
        "from": "T19n1022A_001:0710b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泣已微笑。",
        "from": "T19n1022A_001:0710b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當爾之時。",
        "from": "T19n1022A_001:0710b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛皆同觀視亦皆泣淚。",
        "from": "T19n1022A_001:0710b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱放光明來照是塔。",
        "from": "T19n1022A_001:0710b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時大眾集會。",
        "from": "T19n1022A_001:0710b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆同怪異。",
        "from": "T19n1022A_001:0710b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驚怖而住。",
        "from": "T19n1022A_001:0710b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩亦皆流淚。",
        "from": "T19n1022A_001:0710b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威焰熾盛執杵旋轉。",
        "from": "T19n1022A_001:0710b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛所白言。",
        "from": "T19n1022A_001:0710b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此何因緣現是光相。",
        "from": "T19n1022A_001:0710b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故於如來眼流淚如是。",
        "from": "T19n1022A_001:0710b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是佛之大瑞光相現前。",
        "from": "T19n1022A_001:0710b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來於此大眾。",
        "from": "T19n1022A_001:0710b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解釋我疑。",
        "from": "T19n1022A_001:0710b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時薄伽梵告金剛手。",
        "from": "T19n1022A_001:0710b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大全身舍利聚如來塔。",
        "from": "T19n1022A_001:0710b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來俱胝如胡麻心陀羅尼印法要。",
        "from": "T19n1022A_001:0710b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今在其中。",
        "from": "T19n1022A_001:0710c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手有此法要在是中故。",
        "from": "T19n1022A_001:0710c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔即為如胡麻俱胝百千如來之身。",
        "from": "T19n1022A_001:0710c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是如胡麻百千俱胝如來全身舍利聚。",
        "from": "T19n1022A_001:0710c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至八萬四千法蘊亦住其中。",
        "from": "T19n1022A_001:0710c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是九十九百千俱胝如來頂相在其中。",
        "from": "T19n1022A_001:0710c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔一切如來之所授記。",
        "from": "T19n1022A_001:0710c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是塔所在之處。",
        "from": "T19n1022A_001:0710c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大功勳具大威德能滿一切吉慶。",
        "from": "T19n1022A_001:0710c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾聞佛是說。",
        "from": "T19n1022A_001:0710c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠塵離垢及隨煩惱。",
        "from": "T19n1022A_001:0710c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法眼淨。",
        "from": "T19n1022A_001:0710c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中即有得須陀洹果者。",
        "from": "T19n1022A_001:0710c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得斯陀含果者。",
        "from": "T19n1022A_001:0710c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿那含果者。",
        "from": "T19n1022A_001:0710c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿羅漢果者。",
        "from": "T19n1022A_001:0710c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得辟支佛道者。",
        "from": "T19n1022A_001:0710c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有入菩薩位者。",
        "from": "T19n1022A_001:0710c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得阿鞞跋致者。",
        "from": "T19n1022A_001:0710c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得菩提授記者。",
        "from": "T19n1022A_001:0710c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得初地二地乃至十地者。",
        "from": "T19n1022A_001:0710c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有滿足六波羅蜜者。",
        "from": "T19n1022A_001:0710c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其婆羅門遠塵離垢得五神通。",
        "from": "T19n1022A_001:0710c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩見此奇特希有之事白佛言。",
        "from": "T19n1022A_001:0710c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊甚奇特希有。",
        "from": "T19n1022A_001:0710c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但聞此事尚獲如是殊勝功德。",
        "from": "T19n1022A_001:0710c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況於此法要。",
        "from": "T19n1022A_001:0710c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種殖善根獲大福聚。",
        "from": "T19n1022A_001:0710c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T19n1022A_001:0710c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽金剛手。",
        "from": "T19n1022A_001:0710c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人比丘比丘尼優婆塞優婆夷。",
        "from": "T19n1022A_001:0710c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫此經典者。",
        "from": "T19n1022A_001:0710c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為書寫彼九十九百千俱胝如胡麻如來所說經典。",
        "from": "T19n1022A_001:0710c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於彼九十九百千俱胝如胡麻如來。",
        "from": "T19n1022A_001:0710c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種殖善根。",
        "from": "T19n1022A_001:0710c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為彼等如來護念攝受。",
        "from": "T19n1022A_001:0710c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人讀誦。",
        "from": "T19n1022A_001:0710c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為讀誦過去一切諸佛所說經典。",
        "from": "T19n1022A_001:0710c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受持此經。",
        "from": "T19n1022A_001:0710c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼十方九十九百千俱胝如胡麻如來應正等覺。",
        "from": "T19n1022A_001:0710c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切如來一一方所。",
        "from": "T19n1022A_001:0710c24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙加攝護晝夜現身。",
        "from": "T19n1022A_001:0710c24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人供養此經。",
        "from": "T19n1022A_001:0710c25_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以花香塗香花鬘衣服嚴具而供養者。",
        "from": "T19n1022A_001:0710c25_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於彼十方九十九百千俱胝如來之前。",
        "from": "T19n1022A_001:0711a01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成天妙花妙香衣服嚴具。",
        "from": "T19n1022A_001:0711a02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶所成積如須彌。",
        "from": "T19n1022A_001:0711a03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為供養。",
        "from": "T19n1022A_001:0711a03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種殖善根亦復如是。",
        "from": "T19n1022A_001:0711a03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天龍八部人非人等。",
        "from": "T19n1022A_001:0711a04_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見聞是已各懷希奇。",
        "from": "T19n1022A_001:0711a04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相謂言。",
        "from": "T19n1022A_001:0711a05_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉威德。",
        "from": "T19n1022A_001:0711a05_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是朽土聚以如來神力所加持故。",
        "from": "T19n1022A_001:0711a05_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有是神變。",
        "from": "T19n1022A_001:0711a06_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛手白佛言。",
        "from": "T19n1022A_001:0711a06_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何因緣故。",
        "from": "T19n1022A_001:0711a07_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是七寶塔現為土聚。",
        "from": "T19n1022A_001:0711a07_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022A_001:0711a08_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非土聚乃是七寶所成大寶塔耳。",
        "from": "T19n1022A_001:0711a08_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次金剛手由諸眾生業果故隱。",
        "from": "T19n1022A_001:0711a09_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非如來全身而可毀壞。",
        "from": "T19n1022A_001:0711a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有如來金剛藏身而可壞也。",
        "from": "T19n1022A_001:0711a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以眾生業果因緣。",
        "from": "T19n1022A_001:0711a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現隱耳。",
        "from": "T19n1022A_001:0711a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次金剛手。",
        "from": "T19n1022A_001:0711a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後世末法逼迫時。",
        "from": "T19n1022A_001:0711a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多有眾生習行非法。",
        "from": "T19n1022A_001:0711a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應墮地獄。",
        "from": "T19n1022A_001:0711a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求佛法僧不種殖善根。",
        "from": "T19n1022A_001:0711a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣妙法當隱。",
        "from": "T19n1022A_001:0711a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除此塔。",
        "from": "T19n1022A_001:0711a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來神力所持故。",
        "from": "T19n1022A_001:0711a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是事故我今流淚。",
        "from": "T19n1022A_001:0711a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來亦以是事悉皆流淚。",
        "from": "T19n1022A_001:0711a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩白佛言。",
        "from": "T19n1022A_001:0711a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若有人書寫此經安置塔中獲幾所福。",
        "from": "T19n1022A_001:0711a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022A_001:0711a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人書寫此經置塔中者。",
        "from": "T19n1022A_001:0711a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔即為一切如來金剛藏窣堵波。",
        "from": "T19n1022A_001:0711a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來陀羅尼心祕密加持窣堵波。",
        "from": "T19n1022A_001:0711a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為九十九百千俱胝如胡麻如來窣堵波。",
        "from": "T19n1022A_001:0711a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來佛頂佛眼窣堵波。",
        "from": "T19n1022A_001:0711a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為一切如來神力所護。",
        "from": "T19n1022A_001:0711a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於佛形像中安置。",
        "from": "T19n1022A_001:0711a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及於一切窣堵波中。",
        "from": "T19n1022A_001:0711a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置此經者。",
        "from": "T19n1022A_001:0711a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像即為七寶所成。",
        "from": "T19n1022A_001:0711a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其窣堵波亦為七寶傘蓋。",
        "from": "T19n1022A_001:0711a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠網露槃交結德字鈴鐸純為七寶。",
        "from": "T19n1022A_001:0711a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來於此法要加其威力。",
        "from": "T19n1022A_001:0711a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誠實言本誓加持。",
        "from": "T19n1022A_001:0711a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情能於此塔種殖善根。",
        "from": "T19n1022A_001:0711a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必定於阿耨多羅三藐三菩提得不退轉。",
        "from": "T19n1022A_001:0711a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至應墮阿鼻地獄若於此塔一禮拜一圍遶必得解脫。",
        "from": "T19n1022A_001:0711a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得不退轉於阿耨多羅三藐三菩提。",
        "from": "T19n1022A_001:0711b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔及形像所在之處。",
        "from": "T19n1022A_001:0711b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來神力所護。",
        "from": "T19n1022A_001:0711b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處不為惡風雷雹霹靂所害。",
        "from": "T19n1022A_001:0711b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復不為毒蛇毒蟲毒獸所傷。",
        "from": "T19n1022A_001:0711b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為惡星怪鳥鸚鵡鴝鵒蟲鼠虎狼蜂蠆之所傷害。",
        "from": "T19n1022A_001:0711b04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無夜叉羅剎部多比舍遮癲癎之怖。",
        "from": "T19n1022A_001:0711b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為一切寒熱諸病癧瘻癰毒瘡癬疥癩所染。",
        "from": "T19n1022A_001:0711b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人暫見是塔一切皆除。",
        "from": "T19n1022A_001:0711b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處亦無人馬牛疫童子童女疫。",
        "from": "T19n1022A_001:0711b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為非命所夭。",
        "from": "T19n1022A_001:0711b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為刀杖水火所傷。",
        "from": "T19n1022A_001:0711b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為他敵所侵。",
        "from": "T19n1022A_001:0711b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢饉所逼。",
        "from": "T19n1022A_001:0711b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭魅呪詛不能得便。",
        "from": "T19n1022A_001:0711b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王與諸眷屬。",
        "from": "T19n1022A_001:0711b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜衛護。",
        "from": "T19n1022A_001:0711b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八部大藥叉將。",
        "from": "T19n1022A_001:0711b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及日月衝暈彗星晝夜護持。",
        "from": "T19n1022A_001:0711b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切龍王加其精氣順時降雨。",
        "from": "T19n1022A_001:0711b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天與忉利天三時下來。",
        "from": "T19n1022A_001:0711b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為供養禮拜塔故。",
        "from": "T19n1022A_001:0711b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸仙三時來集讚詠旋遶。",
        "from": "T19n1022A_001:0711b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因與諸天女。",
        "from": "T19n1022A_001:0711b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜三時來下供養。",
        "from": "T19n1022A_001:0711b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處即為一切如來護念加持。",
        "from": "T19n1022A_001:0711b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人作塔或土石木金銀赤銅。",
        "from": "T19n1022A_001:0711b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此法要安置其中。",
        "from": "T19n1022A_001:0711b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔安置已其塔即為七寶所成。",
        "from": "T19n1022A_001:0711b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下階陛露槃傘蓋鈴鐸網綴純為七寶。",
        "from": "T19n1022A_001:0711b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔四方如來形像亦復如是。",
        "from": "T19n1022A_001:0711b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則一切如來神力所持。",
        "from": "T19n1022A_001:0711b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其七寶塔大全身舍利藏。",
        "from": "T19n1022A_001:0711b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高至阿迦尼吒天宮。",
        "from": "T19n1022A_001:0711b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天守衛供養。",
        "from": "T19n1022A_001:0711b22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手白佛言。",
        "from": "T19n1022A_001:0711b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何因緣故此法。",
        "from": "T19n1022A_001:0711b23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是殊勝功德。",
        "from": "T19n1022A_001:0711b24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022A_001:0711b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此寶篋陀羅尼威神力故。",
        "from": "T19n1022A_001:0711b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T19n1022A_001:0711b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來。",
        "from": "T19n1022A_001:0711b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍我等說是陀羅尼。",
        "from": "T19n1022A_001:0711b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T19n1022A_001:0711b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽金剛手。",
        "from": "T19n1022A_001:0711b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是一切如來未來現在及已般涅槃者全身舍利。",
        "from": "T19n1022A_001:0711b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆在寶篋陀羅尼中。",
        "from": "T19n1022A_001:0711b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸如來所有三身亦在是中。",
        "from": "T19n1022A_001:0711b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說陀羅尼曰。",
        "from": "T19n1022A_001:0711b29_5",
        "context_with_next_sentence": true
    },
    {
