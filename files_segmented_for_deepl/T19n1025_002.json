[
    {
        "source_sentence": "佛頂放無垢光明入普門觀察一",
        "from": "T19n1025_002:0723c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切如來心陀羅尼經卷下",
        "from": "T19n1025_002:0723c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天北印度烏填曩國帝",
        "from": "T19n1025_002:0723c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋宮寺三藏傳法大師賜",
        "from": "T19n1025_002:0723c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紫沙門臣施護奉　詔譯",
        "from": "T19n1025_002:0723c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告帝釋天主言。",
        "from": "T19n1025_002:0723c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人能書寫此佛頂放無垢光明入普門觀察一切如來心陀羅尼。",
        "from": "T19n1025_002:0723c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造塔安置或修飾舊塔安置。",
        "from": "T19n1025_002:0724a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以粖香塗香作眾妓樂而為供養。",
        "from": "T19n1025_002:0724a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復潔淨身心。",
        "from": "T19n1025_002:0724a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一晝夜六時。",
        "from": "T19n1025_002:0724a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦此陀羅尼。",
        "from": "T19n1025_002:0724a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復旋遶一百八遍。",
        "from": "T19n1025_002:0724a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅一切惡業。",
        "from": "T19n1025_002:0724a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能生一切善種天主若欲安置此心明者。",
        "from": "T19n1025_002:0724a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至日初出時面東而坐。",
        "from": "T19n1025_002:0724a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸香泥塗曼拏羅。",
        "from": "T19n1025_002:0724a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向於日散種種華。",
        "from": "T19n1025_002:0724a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒沈水香咄嚕瑟迦香等。",
        "from": "T19n1025_002:0724a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命頂禮一切如來一百八遍。",
        "from": "T19n1025_002:0724a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此心明安於塔中。",
        "from": "T19n1025_002:0724a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如以九十九百千俱胝那餘多殑伽沙等如來。",
        "from": "T19n1025_002:0724a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一如來全身舍利。",
        "from": "T19n1025_002:0724a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於塔中而無有異。",
        "from": "T19n1025_002:0724a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復更書此佛頂無垢普門三世如來心陀羅尼安於塔中。",
        "from": "T19n1025_002:0724a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T19n1025_002:0724a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)怛賴(二合引)地吠(二合二)薩哩嚩(二合三)怛他(引)誐哆(四)紇哩(二合)那野(五)誐囉鼻(二合引)入嚩(二合)羅(六)達哩摩(二合)馱(引)覩(七)誐囉鼻(二合引八)僧賀囉(九)阿(引)喻(十)僧輸(引)馱野(十一)播(引)波(十二)薩哩嚩(二合十三)怛他(引)誐哆(十四)三滿覩(引十五)塢瑟抳(二合)灑(十六)尾摩羅(十七)尾秫第(引十八)娑嚩(二合引)賀(引十九)天主若有於此佛頂無垢普門三世如來心陀羅尼塔而生恭敬。",
        "from": "T19n1025_002:0724a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有過去短命之業而得消除。",
        "from": "T19n1025_002:0724a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復增壽命諸天護持。",
        "from": "T19n1025_002:0724a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人命終捨此身時由如蛇蛻。",
        "from": "T19n1025_002:0724a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得往生安樂世界。",
        "from": "T19n1025_002:0724a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮地獄傍生焰魔羅界。",
        "from": "T19n1025_002:0724a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至不墜一切惡趣。",
        "from": "T19n1025_002:0724a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不聞地獄之名。",
        "from": "T19n1025_002:0724a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲如是報得未曾有。",
        "from": "T19n1025_002:0724a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主。",
        "from": "T19n1025_002:0724a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世尊處授此明已。",
        "from": "T19n1025_002:0724a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為摩尼藏無垢天子。",
        "from": "T19n1025_002:0724a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於彼時往自宮中。",
        "from": "T19n1025_002:0724a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先依如來所說儀軌。",
        "from": "T19n1025_002:0724a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法作塔如彼法相。",
        "from": "T19n1025_002:0724a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香禮拜一心念誦祈消業報。",
        "from": "T19n1025_002:0724a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作之時彼摩尼藏無垢天子。",
        "from": "T19n1025_002:0724a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切罪業苦惱之報皆悉消除。",
        "from": "T19n1025_002:0724a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復獲得殊勝之身如彼真金。",
        "from": "T19n1025_002:0724a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目青瑩澈髮鬒光潔。",
        "from": "T19n1025_002:0724b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復獲得一切如來。",
        "from": "T19n1025_002:0724b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於面前虛空中現。",
        "from": "T19n1025_002:0724b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來口稱善哉。",
        "from": "T19n1025_002:0724b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時摩尼藏無垢天子得業清淨罪障消除。",
        "from": "T19n1025_002:0724b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復見自性生大忻慶。",
        "from": "T19n1025_002:0724b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說頌曰。",
        "from": "T19n1025_002:0724b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如來不思議　　明力亦難思",
        "from": "T19n1025_002:0724b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　正法復亦然　　獲得見果報",
        "from": "T19n1025_002:0724b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說偈言。",
        "from": "T19n1025_002:0724b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　頂禮歸命真實際　　釋迦牟尼大導師　本行悲愍濟眾生　　隨願等同如意寶爾時摩尼藏無垢天子說此偈已。",
        "from": "T19n1025_002:0724b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸自宮殿。",
        "from": "T19n1025_002:0724b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眷屬天子天女之眾。",
        "from": "T19n1025_002:0724b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各執持種種天華華鬘。",
        "from": "T19n1025_002:0724b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種天香粖香塗香。",
        "from": "T19n1025_002:0724b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至天衣莊嚴殊妙。",
        "from": "T19n1025_002:0724b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并天帝釋亦復嚴持天諸香華妙供養具。",
        "from": "T19n1025_002:0724b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復往覩史多宮詣世尊所。",
        "from": "T19n1025_002:0724b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到佛所已作大供養。",
        "from": "T19n1025_002:0724b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以種種天諸事業而為供養。",
        "from": "T19n1025_002:0724b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復旋遶多百千匝。",
        "from": "T19n1025_002:0724b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伸供養已坐世尊前而欲聞法。",
        "from": "T19n1025_002:0724b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中四大天王梵王那羅延天大自在天金剛手大藥叉主等。",
        "from": "T19n1025_002:0724b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向世尊前合掌恭敬。",
        "from": "T19n1025_002:0724b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白世尊言世尊。",
        "from": "T19n1025_002:0724b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此摩尼藏無垢天子。",
        "from": "T19n1025_002:0724b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿造何業獲得如是極惡果報。",
        "from": "T19n1025_002:0724b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大苦惱憂愁無量。",
        "from": "T19n1025_002:0724b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉善哉善男子快問斯義。",
        "from": "T19n1025_002:0724b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當諦聽為汝宣說。",
        "from": "T19n1025_002:0724b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手過去之世。",
        "from": "T19n1025_002:0724b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼南印度有城名廣圓滿。",
        "from": "T19n1025_002:0724b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有婆羅門名曰無垢。",
        "from": "T19n1025_002:0724b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而住彼城為說法師。",
        "from": "T19n1025_002:0724b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性識聰敏善能分別諸法之相。",
        "from": "T19n1025_002:0724b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色貌端嚴形儀威肅見者歡喜。",
        "from": "T19n1025_002:0724b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有善信者當為說此心明。",
        "from": "T19n1025_002:0724b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復廣為利益一切眾生故。",
        "from": "T19n1025_002:0724b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此明王陀羅尼。",
        "from": "T19n1025_002:0724b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒常思惟審諦觀察。",
        "from": "T19n1025_002:0724b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時復有長者名曰光明。",
        "from": "T19n1025_002:0724b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦住彼城。",
        "from": "T19n1025_002:0724b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財富無量得大自在。",
        "from": "T19n1025_002:0724b29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸婆羅門咸所隨順。",
        "from": "T19n1025_002:0724b29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次無垢婆羅門。",
        "from": "T19n1025_002:0724c01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時為人解說此心明王陀羅尼。",
        "from": "T19n1025_002:0724c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時光明長者生不喜心作如是思惟。",
        "from": "T19n1025_002:0724c02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此婆羅門我當如魚如龜片片割截。",
        "from": "T19n1025_002:0724c03_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以糞穢著於口中。",
        "from": "T19n1025_002:0724c04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼長者作是思惟興惡心已。",
        "from": "T19n1025_002:0724c04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋便獲得白癩病報。",
        "from": "T19n1025_002:0724c05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大疼痛極大苦惱直至命終。",
        "from": "T19n1025_002:0724c05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既命終已。",
        "from": "T19n1025_002:0724c06_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生於無間大地獄中。",
        "from": "T19n1025_002:0724c06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住彼一劫受大苦惱。",
        "from": "T19n1025_002:0724c07_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出彼獄已生魚龜中。",
        "from": "T19n1025_002:0724c07_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦經一劫而受苦報。",
        "from": "T19n1025_002:0724c08_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後命終。",
        "from": "T19n1025_002:0724c08_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復生大黑繩地獄。",
        "from": "T19n1025_002:0724c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大苦惱亦復一劫。",
        "from": "T19n1025_002:0724c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後出彼獄。",
        "from": "T19n1025_002:0724c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却於本住之城生盲種中。",
        "from": "T19n1025_002:0724c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生即無目。",
        "from": "T19n1025_002:0724c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以宿緣故得聞苾芻住彼彼寺。",
        "from": "T19n1025_002:0724c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生信重親自尋覓。",
        "from": "T19n1025_002:0724c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼苾芻常行悲愍。",
        "from": "T19n1025_002:0724c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既見來已慈心攝取。",
        "from": "T19n1025_002:0724c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更與美食。",
        "from": "T19n1025_002:0724c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後復與解說此心明陀羅尼。",
        "from": "T19n1025_002:0724c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得聞已審諦思惟。",
        "from": "T19n1025_002:0724c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃於此生獲宿命通。",
        "from": "T19n1025_002:0724c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能思惟本所從來。",
        "from": "T19n1025_002:0724c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復思惟業力甚大。",
        "from": "T19n1025_002:0724c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悔恨無量作是念已。",
        "from": "T19n1025_002:0724c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便命終。",
        "from": "T19n1025_002:0724c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承陀羅尼威德力故。",
        "from": "T19n1025_002:0724c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生忉利天處妙宮殿。",
        "from": "T19n1025_002:0724c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸天女眷屬受大快樂。",
        "from": "T19n1025_002:0724c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘業熟故此苦現前。",
        "from": "T19n1025_002:0724c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手爾時彼長者生疑毀謗者。",
        "from": "T19n1025_002:0724c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即摩尼藏無垢天子是金剛手彼摩尼藏無垢。",
        "from": "T19n1025_002:0724c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當受如是諸苦報已。",
        "from": "T19n1025_002:0724c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後修善業歸命三寶漸證善果。",
        "from": "T19n1025_002:0724c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至當來獲得佛菩提故。",
        "from": "T19n1025_002:0724c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手爾時無垢婆羅門者。",
        "from": "T19n1025_002:0724c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後為苾芻復與彼生盲。",
        "from": "T19n1025_002:0724c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解說此陀羅尼者。",
        "from": "T19n1025_002:0724c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即文殊師利童子是。",
        "from": "T19n1025_002:0724c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸天大眾等。",
        "from": "T19n1025_002:0724c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞說此過去事已。",
        "from": "T19n1025_002:0724c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎言希有甚奇甚特歡喜無量。",
        "from": "T19n1025_002:0724c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃發大聲即說頌曰。",
        "from": "T19n1025_002:0724c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不可思議大明力　　解脫三塗乃求得　同如意寶而平等　　此實如來真三昧爾時彼眾會中九十二千天子得不退轉。",
        "from": "T19n1025_002:0724c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千俱胝天女變女人相而成男子。",
        "from": "T19n1025_002:0725a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復獲得住不退轉。",
        "from": "T19n1025_002:0725a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手大藥叉主。",
        "from": "T19n1025_002:0725a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T19n1025_002:0725a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大不思議而能讚歎此大明王陀羅尼。",
        "from": "T19n1025_002:0725a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊願更宣說成就儀軌。",
        "from": "T19n1025_002:0725a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當使眾生於後時分獲得利益安樂。",
        "from": "T19n1025_002:0725a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮地獄傍生焰魔羅界。",
        "from": "T19n1025_002:0725a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊愍彼請已。",
        "from": "T19n1025_002:0725a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告金剛手大藥叉主言。",
        "from": "T19n1025_002:0725a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽諦聽我今為汝宣說此陀羅尼成就儀軌。",
        "from": "T19n1025_002:0725a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於後時後分。",
        "from": "T19n1025_002:0725a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有族姓男族姓女苾芻苾芻尼鄔播索俱鄔播斯迦。",
        "from": "T19n1025_002:0725a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦此明王一遍。",
        "from": "T19n1025_002:0725a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如旋遶二十如來全身之塔。",
        "from": "T19n1025_002:0725a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若念誦此二如意寶一遍。",
        "from": "T19n1025_002:0725a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同彼十殑伽沙等百千俱胝那餘多如來所。",
        "from": "T19n1025_002:0725a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而種善根。",
        "from": "T19n1025_002:0725a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲大福報。",
        "from": "T19n1025_002:0725a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五無間業悉皆滅盡。",
        "from": "T19n1025_002:0725a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至地獄傍生焰魔羅界。",
        "from": "T19n1025_002:0725a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪障皆得解脫復得長壽。",
        "from": "T19n1025_002:0725a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此界命盡由如蛇蛻。",
        "from": "T19n1025_002:0725a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便往生安樂世界不受胞胎。",
        "from": "T19n1025_002:0725a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蓮華中自然化生。",
        "from": "T19n1025_002:0725a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處得宿命智。",
        "from": "T19n1025_002:0725a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復恒常親近供養一切如來。",
        "from": "T19n1025_002:0725a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所求皆悉滿足。",
        "from": "T19n1025_002:0725a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼依法清淨澡浴著鮮潔衣。",
        "from": "T19n1025_002:0725a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作四方曼拏羅。",
        "from": "T19n1025_002:0725a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用好樺皮書此心明。",
        "from": "T19n1025_002:0725a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作五塔安壇四角及彼中心。",
        "from": "T19n1025_002:0725a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於五塔中安置心明。",
        "from": "T19n1025_002:0725a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於中心安置相輪。",
        "from": "T19n1025_002:0725a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於相輪楟上繫赤色絹以為幖幟。",
        "from": "T19n1025_002:0725a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇上安四賢瓶四香爐燒四種香。",
        "from": "T19n1025_002:0725a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂藿香沈香栴檀及安息等。",
        "from": "T19n1025_002:0725a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散諸名華粖香。",
        "from": "T19n1025_002:0725a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置閼伽器等旋遶曼拏羅。",
        "from": "T19n1025_002:0725a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦此二如意寶一百八遍。",
        "from": "T19n1025_002:0725a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人為蛇所螫。",
        "from": "T19n1025_002:0725a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或疾病纏染壽命將盡或中夭者。",
        "from": "T19n1025_002:0725a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於兵戈怖畏乃至為求子息。",
        "from": "T19n1025_002:0725a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於曼拏羅前安五般林樹之葉。",
        "from": "T19n1025_002:0725a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以彼樹葉拂於身上。",
        "from": "T19n1025_002:0725a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於塔曼拏羅發諦善心作諸供養。",
        "from": "T19n1025_002:0725a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能一一依此儀軌者。",
        "from": "T19n1025_002:0725b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前百千劫所有積聚罪業障難獲得解脫。",
        "from": "T19n1025_002:0725b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱一切疾病。",
        "from": "T19n1025_002:0725b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切怖畏悉皆遠離。",
        "from": "T19n1025_002:0725b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於地獄傍生焰魔羅界。",
        "from": "T19n1025_002:0725b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡業亦得解脫。",
        "from": "T19n1025_002:0725b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至世間一切罪障。",
        "from": "T19n1025_002:0725b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒害苦惱咸皆破滅。",
        "from": "T19n1025_002:0725b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有專注念誦。",
        "from": "T19n1025_002:0725b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "短壽之人獲得長壽。",
        "from": "T19n1025_002:0725b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有久患瘡痍久久不瘥便得痊瘥。",
        "from": "T19n1025_002:0725b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身根圓滿清淨微妙。",
        "from": "T19n1025_002:0725b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意所求事皆悉獲得。",
        "from": "T19n1025_002:0725b08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至命終面前不見一切苦惱。",
        "from": "T19n1025_002:0725b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後由如蛇蛻。",
        "from": "T19n1025_002:0725b09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往生安樂世界。",
        "from": "T19n1025_002:0725b09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處蓮華化生。",
        "from": "T19n1025_002:0725b10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸所受用悉皆殊妙得宿命通。",
        "from": "T19n1025_002:0725b10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依儀軌日日三時念誦二十一遍。",
        "from": "T19n1025_002:0725b11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至誦滿一年。",
        "from": "T19n1025_002:0725b12_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得普門觀察光明三摩地。",
        "from": "T19n1025_002:0725b12_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見十方一切佛剎中一切如來。",
        "from": "T19n1025_002:0725b13_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又得無垢清淨焰熾極清淨身得心清淨。",
        "from": "T19n1025_002:0725b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同於八十二殑伽沙等百千俱胝那餘多佛所而種善根。",
        "from": "T19n1025_002:0725b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪迴往返常處清淨。",
        "from": "T19n1025_002:0725b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應有佛剎求往皆至。",
        "from": "T19n1025_002:0725b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生安樂世界應念即生。",
        "from": "T19n1025_002:0725b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死相苦惱皆不現前。",
        "from": "T19n1025_002:0725b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至夢中亦復不見。",
        "from": "T19n1025_002:0725b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於八日十四日十五日。",
        "from": "T19n1025_002:0725b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋遶如來全身之塔。",
        "from": "T19n1025_002:0725b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此二大如意寶陀羅尼八百遍。",
        "from": "T19n1025_002:0725b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當誦之時塔中有聲。",
        "from": "T19n1025_002:0725b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安慰行人而稱善哉。",
        "from": "T19n1025_002:0725b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人現世所有一切罪障及諸煩惱。",
        "from": "T19n1025_002:0725b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至貪瞋癡無明垢穢皆悉消除。",
        "from": "T19n1025_002:0725b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得無垢極清淨身。",
        "from": "T19n1025_002:0725b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復男子女人童男童女聞念誦聲。",
        "from": "T19n1025_002:0725b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪障悉得解脫。",
        "from": "T19n1025_002:0725b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若念誦之聲墮諸傍生。",
        "from": "T19n1025_002:0725b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以飛禽四足二足多足無足種種蟲蟻含識之類。",
        "from": "T19n1025_002:0725b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切業道悉皆解脫。",
        "from": "T19n1025_002:0725b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於塚間掘取骸骨。",
        "from": "T19n1025_002:0725b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪其沙土二十一遍散於骨上。",
        "from": "T19n1025_002:0725b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼之神識隨其方處所墮地獄。",
        "from": "T19n1025_002:0725b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆解脫生善逝天。",
        "from": "T19n1025_002:0725b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼天人身雨異花降於塚間。",
        "from": "T19n1025_002:0725b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復行人在於塚間山間念誦之時。",
        "from": "T19n1025_002:0725c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有飛禽走獸種種之類。",
        "from": "T19n1025_002:0725c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊行至彼悉得解脫業報之身生善逝天。",
        "from": "T19n1025_002:0725c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若念誦佛頂無垢普門三世如來心陀羅尼八千遍者。",
        "from": "T19n1025_002:0725c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火不能燒。",
        "from": "T19n1025_002:0725c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作惡業乃至五無間業便得解脫。",
        "from": "T19n1025_002:0725c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦百千遍。",
        "from": "T19n1025_002:0725c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之時被焰魔使以索繫頸。",
        "from": "T19n1025_002:0725c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牽入焰魔羅界。",
        "from": "T19n1025_002:0725c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼界之內一切地獄悉皆破壞返生怖畏。",
        "from": "T19n1025_002:0725c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋令迴還而得解脫。",
        "from": "T19n1025_002:0725c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂彼行人法王之使。",
        "from": "T19n1025_002:0725c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住靜慮道無有疑惑。",
        "from": "T19n1025_002:0725c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生安樂世界隨願往生。",
        "from": "T19n1025_002:0725c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦百千遍得金色之身相貌圓滿。",
        "from": "T19n1025_002:0725c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世如來視如一子。",
        "from": "T19n1025_002:0725c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若書寫百千本造其百千塔。",
        "from": "T19n1025_002:0725c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法安置莊嚴熾盛。",
        "from": "T19n1025_002:0725c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定得不退轉安住十地。",
        "from": "T19n1025_002:0725c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如於彼九十九百千俱胝那餘多殑伽沙等如來所。",
        "from": "T19n1025_002:0725c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而種善根獲得受記。",
        "from": "T19n1025_002:0725c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說頌曰。",
        "from": "T19n1025_002:0725c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼一塔中安心明　　竪立輪楟著幖幟　同三世佛全身藏　　滿百千塔此應知又若於彼一切故塔重加修飾。",
        "from": "T19n1025_002:0725c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲不退轉當來證得無上正等正覺。",
        "from": "T19n1025_002:0725c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益人天迨及蠕動。",
        "from": "T19n1025_002:0725c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫惡趣得不退轉。",
        "from": "T19n1025_002:0725c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德無量不能稱讚。",
        "from": "T19n1025_002:0725c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手大藥叉主。",
        "from": "T19n1025_002:0725c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大王天梵天那羅延天大自在天。",
        "from": "T19n1025_002:0725c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在覩史多宮所住天子。",
        "from": "T19n1025_002:0725c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至帝釋及忉利天子摩尼藏無垢等。",
        "from": "T19n1025_002:0725c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸皆一心遶佛三匝。",
        "from": "T19n1025_002:0725c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却住佛前合掌恭敬。",
        "from": "T19n1025_002:0725c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T19n1025_002:0725c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此如意寶陀羅尼。",
        "from": "T19n1025_002:0725c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大不思議甚奇希有難見難聞。",
        "from": "T19n1025_002:0725c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我等同心於後世時。",
        "from": "T19n1025_002:0725c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生恒常受持此如意寶令久住世。",
        "from": "T19n1025_002:0725c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生分別解說者。",
        "from": "T19n1025_002:0725c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等恒常以誠諦心。",
        "from": "T19n1025_002:0725c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潛密擁護由如赤子。",
        "from": "T19n1025_002:0725c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉善哉汝等如是。",
        "from": "T19n1025_002:0725c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今以此如意寶明王付囑汝等。",
        "from": "T19n1025_002:0725c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝善護持。",
        "from": "T19n1025_002:0725c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已。",
        "from": "T19n1025_002:0725c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩及諸天眾。",
        "from": "T19n1025_002:0725c29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸皆歡喜作禮而退。",
        "from": "T19n1025_002:0726a01_19",
        "context_with_next_sentence": false
    }
]