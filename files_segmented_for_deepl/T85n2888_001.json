[
    {
        "source_sentence": "佛說延壽命經",
        "from": "T85n2888_001:1404a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T85n2888_001:1404a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在娑羅雙樹間。",
        "from": "T85n2888_001:1404a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨般涅槃。",
        "from": "T85n2888_001:1404a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四眾。",
        "from": "T85n2888_001:1404a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘比丘尼優婆塞優婆夷等。",
        "from": "T85n2888_001:1404b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來集會□□□□□□□延壽。",
        "from": "T85n2888_001:1404b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[跳兆+氐]跪合掌。",
        "from": "T85n2888_001:1404b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前白佛言。",
        "from": "T85n2888_001:1404b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我等四眾皆來集會。",
        "from": "T85n2888_001:1404b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉請如來。",
        "from": "T85n2888_001:1404b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫入涅槃。",
        "from": "T85n2888_001:1404b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來哀受我等勸請。",
        "from": "T85n2888_001:1404b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令住一劫。",
        "from": "T85n2888_001:1404b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫入涅槃。",
        "from": "T85n2888_001:1404b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告延壽菩薩。",
        "from": "T85n2888_001:1404b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽。",
        "from": "T85n2888_001:1404b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當為汝分別□□□□□□已來經今四十九年。",
        "from": "T85n2888_001:1404b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教化眾生。",
        "from": "T85n2888_001:1404b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上至飛鳥。",
        "from": "T85n2888_001:1404b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至蟻子。",
        "from": "T85n2888_001:1404b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蠢動含識有形無形。",
        "from": "T85n2888_001:1404b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四足兩足多足無足。",
        "from": "T85n2888_001:1404b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胎卵濕化。",
        "from": "T85n2888_001:1404b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是眾生盡令遇善知識而登正覺。",
        "from": "T85n2888_001:1404b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與我□□□。",
        "from": "T85n2888_001:1404b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲入涅槃。",
        "from": "T85n2888_001:1404b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本為波旬所請。",
        "from": "T85n2888_001:1404b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波旬□我言。",
        "from": "T85n2888_001:1404b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞿曇三界眾生盡受生死。",
        "from": "T85n2888_001:1404b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞿曇今日若住一劫。",
        "from": "T85n2888_001:1404b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違我本願。",
        "from": "T85n2888_001:1404b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時我受波旬所請。",
        "from": "T85n2888_001:1404b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而入涅槃。",
        "from": "T85n2888_001:1404b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我違波旬。",
        "from": "T85n2888_001:1404b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈是諸佛。",
        "from": "T85n2888_001:1404b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延壽菩薩白佛言。",
        "from": "T85n2888_001:1404b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊波旬外□生壽□□諸佛涅槃。",
        "from": "T85n2888_001:1404b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擬為三界之主。",
        "from": "T85n2888_001:1404b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生盡入魔網。",
        "from": "T85n2888_001:1404b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有休息。",
        "from": "T85n2888_001:1404b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從生死至生死。",
        "from": "T85n2888_001:1404b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從煩惱至煩惱。",
        "from": "T85n2888_001:1404b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與魔為眷屬。",
        "from": "T85n2888_001:1404b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不遇正法。",
        "from": "T85n2888_001:1404b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又死入地獄。",
        "from": "T85n2888_001:1404b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千劫萬劫常無光明。",
        "from": "T85n2888_001:1404b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀輪□□銅蛇鐵狗。",
        "from": "T85n2888_001:1404b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛頭獄卒手如鋒刀利如霜雪。",
        "from": "T85n2888_001:1404b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終朝竟日共相撮挽。",
        "from": "T85n2888_001:1404b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐怖無極。",
        "from": "T85n2888_001:1404b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無處藏隱。",
        "from": "T85n2888_001:1404b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不聞父母三寶名字。",
        "from": "T85n2888_001:1404b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日之中千生萬死生。",
        "from": "T85n2888_001:1404b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從地獄出復受種種諸惡□生身。",
        "from": "T85n2888_001:1404b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作駱駝身。",
        "from": "T85n2888_001:1404b22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生驢中身。",
        "from": "T85n2888_001:1404b23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常負重常因饑渴。",
        "from": "T85n2888_001:1404b23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生人中貧窮下賤。",
        "from": "T85n2888_001:1404b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人所使。",
        "from": "T85n2888_001:1404b24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣不蓋形。",
        "from": "T85n2888_001:1404b24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食不充口。",
        "from": "T85n2888_001:1404b24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有富貴而無男女。",
        "from": "T85n2888_001:1404b25_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有貧窮而多子息。",
        "from": "T85n2888_001:1404b25_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有眾生惡□在床痿黃困篤篤。",
        "from": "T85n2888_001:1404b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連年累月形消肉盡。",
        "from": "T85n2888_001:1404b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡瘡膿血遍體常流。",
        "from": "T85n2888_001:1404b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人所惡賤。",
        "from": "T85n2888_001:1404b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或受盲聾瘖瘂。",
        "from": "T85n2888_001:1404b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或百歲不死受苦。",
        "from": "T85n2888_001:1404b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或三十富貴早亡。",
        "from": "T85n2888_001:1404b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是橫羅其殃。",
        "from": "T85n2888_001:1404b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並入魔網。",
        "from": "T85n2888_001:1404b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來令住一劫。",
        "from": "T85n2888_001:1404b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫受波旬所請。",
        "from": "T85n2888_001:1404c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告延壽菩薩。",
        "from": "T85n2888_001:1404c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2888_001:1404c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我滅度後若有眾生。",
        "from": "T85n2888_001:1404c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受如是種種惡報。",
        "from": "T85n2888_001:1404c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但造延壽經一百卷乃至一卷。",
        "from": "T85n2888_001:1404c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩卷譬如一人有力不如十人之力。",
        "from": "T85n2888_001:1404c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十人之力不如百人。",
        "from": "T85n2888_001:1404c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若造延壽經亦復如是。",
        "from": "T85n2888_001:1404c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但造此經散轉與人受持讀誦。",
        "from": "T85n2888_001:1404c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當救護。",
        "from": "T85n2888_001:1404c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如慈母生一子。",
        "from": "T85n2888_001:1404c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子若得病慈母亦病。",
        "from": "T85n2888_001:1404c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子若得愈慈母亦愈。",
        "from": "T85n2888_001:1404c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子。",
        "from": "T85n2888_001:1404c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生皆是吾子。",
        "from": "T85n2888_001:1404c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善願之者吾當舒金色。",
        "from": "T85n2888_001:1404c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬以摩其頂隨其本願無不獲果。",
        "from": "T85n2888_001:1404c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時延壽菩薩以偈讚曰。",
        "from": "T85n2888_001:1404c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世尊具相真金色　　八十種好悉莊嚴　四十九年大慈父　　波旬無故請涅槃　寂滅如空不可見　　定知三界永無生　佛法滅定起災殃　　魔王毒心競相向　一切聲聞及菩薩　　一切人民四部眾　法河涸竭法幢摧　　法山崩倒法舡沒　八國諸王皆自撲　　血汗流淚如暴雨　何期大師入涅槃　　我等凡夫更久住　聲聞緣覺稱善哉　　一切眾生失依附爾時眾中有大菩薩。",
        "from": "T85n2888_001:1404c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰普淨。",
        "from": "T85n2888_001:1404c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問延壽菩薩。",
        "from": "T85n2888_001:1404c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來今日入涅槃。",
        "from": "T85n2888_001:1404c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將何付囑惡趣眾生。",
        "from": "T85n2888_001:1404c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令命長壽。",
        "from": "T85n2888_001:1404c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫似如來三界第一。",
        "from": "T85n2888_001:1404c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不住一劫。",
        "from": "T85n2888_001:1404c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時延壽白言。",
        "from": "T85n2888_001:1404c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普淨菩薩。",
        "from": "T85n2888_001:1404c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛滅度後令寫延壽經一百卷。",
        "from": "T85n2888_001:1404c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散與眾生。",
        "from": "T85n2888_001:1404c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而共轉讀。",
        "from": "T85n2888_001:1404c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "短命眾生令得長壽。",
        "from": "T85n2888_001:1404c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大慈舒金色臂為摩頂受記。",
        "from": "T85n2888_001:1404c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來當自覆護。",
        "from": "T85n2888_001:1404c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時普淨讚言。",
        "from": "T85n2888_001:1404c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉。",
        "from": "T85n2888_001:1404c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承如是言。",
        "from": "T85n2888_001:1404c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必非虛偽。",
        "from": "T85n2888_001:1404c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受奉行。",
        "from": "T85n2888_001:1404c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說延壽命經一卷",
        "from": "T85n2888_001:1404c28_0",
        "context_with_next_sentence": false
    }
]