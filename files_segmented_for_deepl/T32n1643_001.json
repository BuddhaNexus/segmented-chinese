[
    {
        "source_sentence": "尼乾子問無我義經",
        "from": "T32n1643_001:0172a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴菩薩集",
        "from": "T32n1643_001:0172a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1643_001:0172a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿宣梵大師賜紫",
        "from": "T32n1643_001:0172a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣日稱等奉　詔譯",
        "from": "T32n1643_001:0172a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時尼乾子等。",
        "from": "T32n1643_001:0172a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心懷異見發起疑惑。",
        "from": "T32n1643_001:0172a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋求往詣解大乘者所。",
        "from": "T32n1643_001:0172a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到已作禮合掌恭敬。",
        "from": "T32n1643_001:0172a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問無我義使除暗鈍。",
        "from": "T32n1643_001:0172a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說為我開示。",
        "from": "T32n1643_001:0172a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說此身無有我者。",
        "from": "T32n1643_001:0172a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼最上我亦無所有。",
        "from": "T32n1643_001:0172a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故身中現見啼笑嬉戲忿怒我慢嫉妬兩舌等事。",
        "from": "T32n1643_001:0172a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於有於無不能決了。",
        "from": "T32n1643_001:0172a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願仁者為我除斷。",
        "from": "T32n1643_001:0172a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解大乘者謂尼乾子言。",
        "from": "T32n1643_001:0172a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝先所執最上我者。",
        "from": "T32n1643_001:0172a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定虛妄。",
        "from": "T32n1643_001:0172a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以何名有以何名無。",
        "from": "T32n1643_001:0172a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此二中都無所得。",
        "from": "T32n1643_001:0172a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以自身髮甲皮肉筋骨脂髓膓胃手足一切身肢。",
        "from": "T32n1643_001:0172a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為最上我。",
        "from": "T32n1643_001:0172a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外尋求何有可見。",
        "from": "T32n1643_001:0172a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時尼乾子白智者言。",
        "from": "T32n1643_001:0172a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以肉眼故不能見。",
        "from": "T32n1643_001:0172a29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘有天眼彼可得見。",
        "from": "T32n1643_001:0172a29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者曰。",
        "from": "T32n1643_001:0172b01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非天眼之所能見。",
        "from": "T32n1643_001:0172b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼非顯色亦非形色。",
        "from": "T32n1643_001:0172b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性空故。",
        "from": "T32n1643_001:0172b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有可見。",
        "from": "T32n1643_001:0172b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼乾子言。",
        "from": "T32n1643_001:0172b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼定無耶。",
        "from": "T32n1643_001:0172b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者曰。",
        "from": "T32n1643_001:0172b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若說無者。",
        "from": "T32n1643_001:0172b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何現見。",
        "from": "T32n1643_001:0172b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從因緣生啼笑等相。",
        "from": "T32n1643_001:0172b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說為有。",
        "from": "T32n1643_001:0172b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說為無。",
        "from": "T32n1643_001:0172b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二皆邪妄。",
        "from": "T32n1643_001:0172b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非其正理。",
        "from": "T32n1643_001:0172b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼乾子言。",
        "from": "T32n1643_001:0172b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有若無俱不應說。",
        "from": "T32n1643_001:0172b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何此身現有所住。",
        "from": "T32n1643_001:0172b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者曰。",
        "from": "T32n1643_001:0172b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有少分見所住相。",
        "from": "T32n1643_001:0172b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼乾子言。",
        "from": "T32n1643_001:0172b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無住著即同虛空。",
        "from": "T32n1643_001:0172b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者曰。",
        "from": "T32n1643_001:0172b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如汝所說如虛空故。",
        "from": "T32n1643_001:0172b08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼乾子言。",
        "from": "T32n1643_001:0172b08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾啼笑等相當云何遣。",
        "from": "T32n1643_001:0172b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者曰。",
        "from": "T32n1643_001:0172b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是義中而有二種。",
        "from": "T32n1643_001:0172b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者世俗。",
        "from": "T32n1643_001:0172b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者勝義。",
        "from": "T32n1643_001:0172b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依世俗說。",
        "from": "T32n1643_001:0172b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有自他命者士夫補特伽羅作者受者財寶妻子親眷朋屬。",
        "from": "T32n1643_001:0172b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是差別。",
        "from": "T32n1643_001:0172b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依勝義說。",
        "from": "T32n1643_001:0172b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無自他命者乃至朋屬等事。",
        "from": "T32n1643_001:0172b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無少分差別等相。",
        "from": "T32n1643_001:0172b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若世俗說。",
        "from": "T32n1643_001:0172b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有生滅善惡果報。",
        "from": "T32n1643_001:0172b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若勝義中。",
        "from": "T32n1643_001:0172b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無生滅善惡果報。",
        "from": "T32n1643_001:0172b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼真如法自性清淨。",
        "from": "T32n1643_001:0172b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有煩惱無有染污亦無覺了。",
        "from": "T32n1643_001:0172b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來寂靜。",
        "from": "T32n1643_001:0172b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說是名真如自性。",
        "from": "T32n1643_001:0172b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重明此義以偈頌曰。",
        "from": "T32n1643_001:0172b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世俗勝義諦　　二種今當說",
        "from": "T32n1643_001:0172b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世俗即世法　　勝義無過上",
        "from": "T32n1643_001:0172b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　有情依世俗　　增長於煩惱",
        "from": "T32n1643_001:0172b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　久處於輪回　　不了勝義法",
        "from": "T32n1643_001:0172b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　由依世俗故　　自他生遍計",
        "from": "T32n1643_001:0172b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　起分別疑惑　　而受諸苦惱",
        "from": "T32n1643_001:0172b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼愚癡凡夫　　長時受逼迫",
        "from": "T32n1643_001:0172b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不修出離因　　何知解脫理",
        "from": "T32n1643_001:0172b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愚人常依止　　世間生滅法",
        "from": "T32n1643_001:0172b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　馳流五趣中　　相續而不斷",
        "from": "T32n1643_001:0172b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　由不達勝義　　則無滅苦要",
        "from": "T32n1643_001:0172b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　展轉受輪迴　　如蠶自纏縛",
        "from": "T32n1643_001:0172b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦如於日月　　旋轉無休息",
        "from": "T32n1643_001:0172c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生三有中　　來往亦如是",
        "from": "T32n1643_001:0172c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸行悉無常　　剎那而遷變",
        "from": "T32n1643_001:0172c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遠離世俗法　　當求勝義諦",
        "from": "T32n1643_001:0172c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　乃至住諸天　　及乾闥婆等",
        "from": "T32n1643_001:0172c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不免彼無常　　此皆世俗果",
        "from": "T32n1643_001:0172c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　夜叉鬼神等　　得持明成就",
        "from": "T32n1643_001:0172c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不免墮惡趣　　此皆世俗果",
        "from": "T32n1643_001:0172c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　帝釋轉輪王　　福報無與等",
        "from": "T32n1643_001:0172c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不免墮傍生　　此皆世俗果",
        "from": "T32n1643_001:0172c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　人天五欲樂　　決定當棄捨",
        "from": "T32n1643_001:0172c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於彼菩提心　　以惠常觀察",
        "from": "T32n1643_001:0172c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自性無所著　　一切悉皆空",
        "from": "T32n1643_001:0172c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　超越所戲論　　是菩提心相",
        "from": "T32n1643_001:0172c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非剛非柔軟　　非熱亦非冷",
        "from": "T32n1643_001:0172c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非觸非執受　　是菩提心相",
        "from": "T32n1643_001:0172c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非長及非短　　非圓亦非方",
        "from": "T32n1643_001:0172c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非微細非麁　　是菩提心相",
        "from": "T32n1643_001:0172c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非白及非紅　　非黑亦非黃",
        "from": "T32n1643_001:0172c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非形色顯色　　是菩提心相",
        "from": "T32n1643_001:0172c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非色非光明　　非動非纏縛",
        "from": "T32n1643_001:0172c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　非住如虛空　　是菩提心相",
        "from": "T32n1643_001:0172c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　離思惟觀察　　非外道境界",
        "from": "T32n1643_001:0172c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　與般若相應　　是菩提心相",
        "from": "T32n1643_001:0172c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無似無對待　　無等常寂靜",
        "from": "T32n1643_001:0172c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自性本凝然　　是菩提心相",
        "from": "T32n1643_001:0172c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如聚沫浮泡　　如幻化陽焰",
        "from": "T32n1643_001:0172c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無我亦無常　　一切非堅固",
        "from": "T32n1643_001:0172c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是身如坏器　　虛幻而充滿",
        "from": "T32n1643_001:0172c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　與三毒相應　　畢竟空無有",
        "from": "T32n1643_001:0173a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如月處雲中　　剎那而不現",
        "from": "T32n1643_001:0173a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以甚深般若　　達有為如幻",
        "from": "T32n1643_001:0173a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生器世間　　一切皆如夢",
        "from": "T32n1643_001:0173a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　由自心分別　　彼心亦如夢",
        "from": "T32n1643_001:0173a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人依正理　　以惠而修習",
        "from": "T32n1643_001:0173a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　棄背諸障染　　速得無上道",
        "from": "T32n1643_001:0173a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此最勝般若　　諸佛所稱讚",
        "from": "T32n1643_001:0173a08_0",
        "context_with_next_sentence": true
    },
    {
