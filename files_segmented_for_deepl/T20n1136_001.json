[
    {
        "source_sentence": "佛說一切諸如來心光明加持普",
        "from": "T20n1136_001:0579a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢菩薩延命金剛最勝陀羅尼經",
        "from": "T20n1136_001:0579a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺開府儀同三司肅國公特",
        "from": "T20n1136_001:0579a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進試鴻臚贈司空諡大辨正廣智食",
        "from": "T20n1136_001:0579a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邑三千戶師子國三藏沙門不空譯",
        "from": "T20n1136_001:0579a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1136_001:0579a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在殑伽河側。",
        "from": "T20n1136_001:0579a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸大比丘僧菩薩摩訶薩天人眾俱。",
        "from": "T20n1136_001:0579a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中有普賢菩薩。",
        "from": "T20n1136_001:0579a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住如來祕密三摩地。",
        "from": "T20n1136_001:0579a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從三昧起。",
        "from": "T20n1136_001:0579a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現大神通力。",
        "from": "T20n1136_001:0579a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛加持宣金剛壽命陀羅尼。",
        "from": "T20n1136_001:0579a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生增壽命故無夭橫死。",
        "from": "T20n1136_001:0579a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦令獲得金剛壽命堅固不壞。",
        "from": "T20n1136_001:0579a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就菩提到不退地。",
        "from": "T20n1136_001:0579a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊於心轉光明召集十方世界恒河沙諸佛。",
        "from": "T20n1136_001:0579a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿虛空中。",
        "from": "T20n1136_001:0579a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各放光明如因陀羅網。",
        "from": "T20n1136_001:0579a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以光明照觸普賢菩薩令宣說金剛壽命經。",
        "from": "T20n1136_001:0579a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時普賢菩薩得諸佛心印。",
        "from": "T20n1136_001:0579a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即住金剛壽命三昧耶。",
        "from": "T20n1136_001:0579a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於身毛孔中放無量微塵等數光遍十方界。",
        "from": "T20n1136_001:0579a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自在神通力即說。",
        "from": "T20n1136_001:0579a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T20n1136_001:0579a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(一)者隷者攞者隷(二)尾曩知(三)娑縛(二合)悉底(二合)計(四)斫羯[口*束*頁](二合)誐爾(五)鉢囉(二合)捨漫覩(六)薩嚩路誐(引)薩嚩娑怛嚩(二合)南(七)阿曩[齒*束](八)句曩[齒*束](九)摩賀曩[齒*束](十)者隷者隷(十一)係摩誤憍(二合反)哩(十二)係摩儞鏟禰(十三)係摩尸棄(十四)矯囉吠(十五)矯囉悌(十六)係俱囉吠(十七)俱囉[口*梨](十八)俱囉摩底(十九)微捨摩寧摩寧(二十)戍秫毘嚩(二合二十一)阿者梨(二十二)微者梨(二十三)摩尾覽嚩(二十四)呼牟呼牟(二十五)唵嚩日囉(二合)諭曬娑嚩(二合)賀說是陀羅尼已。",
        "from": "T20n1136_001:0579a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地山河悉皆振動。",
        "from": "T20n1136_001:0579b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄摧碎宮震動。",
        "from": "T20n1136_001:0579b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病苦眾生當時蘇息。",
        "from": "T20n1136_001:0579b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會中有無量執金剛神。",
        "from": "T20n1136_001:0579b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異口同音亦共宣說。",
        "from": "T20n1136_001:0579b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩摩訶薩眾悉助延命宣說陀羅尼令獲金剛壽命。",
        "from": "T20n1136_001:0579b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時十方塵沙諸佛心印加持。",
        "from": "T20n1136_001:0579b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令普賢菩薩及四天王增得金剛壽命。",
        "from": "T20n1136_001:0579b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊彈指讚嘆。",
        "from": "T20n1136_001:0579b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能快善利益眾生。",
        "from": "T20n1136_001:0579b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1136_001:0579b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怖畏夭橫非命及不祥事。",
        "from": "T20n1136_001:0579b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以沐浴著新淨衣燒香散花。",
        "from": "T20n1136_001:0579b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持我延命心真言。",
        "from": "T20n1136_001:0579b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即增壽。",
        "from": "T20n1136_001:0579b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有病苦眾生。",
        "from": "T20n1136_001:0579b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求長壽故離於病苦。",
        "from": "T20n1136_001:0579b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即建立道場。",
        "from": "T20n1136_001:0579b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清淨屋舍。",
        "from": "T20n1136_001:0579b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或就伽藍。",
        "from": "T20n1136_001:0579b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請三七比丘清淨僧。",
        "from": "T20n1136_001:0579b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉讀此經各四十九遍。",
        "from": "T20n1136_001:0579b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別持是陀羅尼滿十萬遍。",
        "from": "T20n1136_001:0579b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即獲壽命。",
        "from": "T20n1136_001:0579b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病者即於夜夢自見殊勝境界。",
        "from": "T20n1136_001:0579b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我此延命法先須彩書普賢菩薩。",
        "from": "T20n1136_001:0579b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如滿月童子形。",
        "from": "T20n1136_001:0579b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五佛頭冠。",
        "from": "T20n1136_001:0579b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持金剛杵。",
        "from": "T20n1136_001:0579b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持召集金剛鈴。",
        "from": "T20n1136_001:0579b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契鬘縱緩帶坐千葉寶華。",
        "from": "T20n1136_001:0579b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下有白象王象有三頭。",
        "from": "T20n1136_001:0579b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻卷獨股杵。",
        "from": "T20n1136_001:0579b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各具六牙。",
        "from": "T20n1136_001:0579b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其象四足踏一大金剛輪。",
        "from": "T20n1136_001:0579b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪下有五千群象。",
        "from": "T20n1136_001:0579b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各負其輪。",
        "from": "T20n1136_001:0579b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩身放百寶光。",
        "from": "T20n1136_001:0579b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光外盡白月輪眾彩莊嚴盡得其像敬於清淨處建立道場。",
        "from": "T20n1136_001:0579b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令清淨僧持是真言。",
        "from": "T20n1136_001:0579b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及轉此經乃至書寫。",
        "from": "T20n1136_001:0579b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及持金剛壽命陀羅尼滿十萬遍。",
        "from": "T20n1136_001:0579b22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即增壽命除夭橫故。",
        "from": "T20n1136_001:0579b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王等承佛加持助普賢菩薩延命各立誓言。",
        "from": "T20n1136_001:0579b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑婆世界南贍部洲但有此經法流行之處。",
        "from": "T20n1136_001:0579b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等四王即為結護令無夭橫。",
        "from": "T20n1136_001:0579b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如有此經清淨道場如不降赴。",
        "from": "T20n1136_001:0579b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我失此威光損我果報。",
        "from": "T20n1136_001:0579b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退失菩提心不得解脫。",
        "from": "T20n1136_001:0579b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時十方如來加持一切執金剛菩薩。",
        "from": "T20n1136_001:0579c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異口同音亦說延命陀羅尼曰。",
        "from": "T20n1136_001:0579c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅(二合)諭勢吽吽尸棄娑嚩(二合)賀如是說已。",
        "from": "T20n1136_001:0579c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來十方執金剛菩薩隱於虛中已不現。",
        "from": "T20n1136_001:0579c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時毘沙門天王白佛言。",
        "from": "T20n1136_001:0579c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我亦以助佛神力加持護念除非命故說陀羅尼曰。",
        "from": "T20n1136_001:0579c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合)諭勢。",
        "from": "T20n1136_001:0579c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濕吠帝濕吠帝濕吠多隷理娑嚩(二合)賀說是陀羅尼已。",
        "from": "T20n1136_001:0579c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切眾生獲得壽命無夭橫故。",
        "from": "T20n1136_001:0579c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時毘樓勒叉天王白佛言。",
        "from": "T20n1136_001:0579c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我亦以助佛神力宣說延命陀羅尼曰。",
        "from": "T20n1136_001:0579c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅(二合)諭勢摩蹬儗摩蹬儗摩蹬儗儞輸摩輸謀嚩(二合)賀說是陀羅尼已。",
        "from": "T20n1136_001:0579c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得壽命無夭橫故。",
        "from": "T20n1136_001:0579c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時毘樓博叉天王白佛言。",
        "from": "T20n1136_001:0579c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我亦以助佛神力故助宣延命陀羅尼曰。",
        "from": "T20n1136_001:0579c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅(二合)諭勢者理者理者理隷說是陀羅尼令諸眾生獲金剛壽命無夭橫故。",
        "from": "T20n1136_001:0579c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時提頭賴吒天王白佛言。",
        "from": "T20n1136_001:0579c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我亦以佛神力宣說延命陀羅尼曰。",
        "from": "T20n1136_001:0579c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅(二合)諭勢未臨嚩嚩嚩娑嚩(二合)賀說是陀羅尼已。",
        "from": "T20n1136_001:0579c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生獲金剛壽命無夭橫故。",
        "from": "T20n1136_001:0579c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告四天王言。",
        "from": "T20n1136_001:0579c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生怖畏死難病苦夭橫。",
        "from": "T20n1136_001:0579c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是苦。",
        "from": "T20n1136_001:0579c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但書寫此經受持讀誦。",
        "from": "T20n1136_001:0579c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或別持此陀羅尼。",
        "from": "T20n1136_001:0579c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或畫普賢延命像。",
        "from": "T20n1136_001:0579c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此方法依月一日八日十五日。",
        "from": "T20n1136_001:0579c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立道場燒四十九燈。",
        "from": "T20n1136_001:0579c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花香果藥各置十六器散於壇上。",
        "from": "T20n1136_001:0580a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌禮拜高聲讚詠此陀羅尼。",
        "from": "T20n1136_001:0580a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及懺悔往咎。",
        "from": "T20n1136_001:0580a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮三惡道。",
        "from": "T20n1136_001:0580a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨此身獲得金剛壽命更不輪迴。",
        "from": "T20n1136_001:0580a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有比丘尼及四眾。",
        "from": "T20n1136_001:0580a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉讀此經而不廢忘。",
        "from": "T20n1136_001:0580a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離於短命夭橫之怖。",
        "from": "T20n1136_001:0580a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及夜惡夢厭魅呪咀惡形羅剎鳥鳴百怪之屬。",
        "from": "T20n1136_001:0580a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為水火兵毒之所傷害。",
        "from": "T20n1136_001:0580a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛及大菩薩攝受護念。",
        "from": "T20n1136_001:0580a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得諸佛之所護念。",
        "from": "T20n1136_001:0580a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T20n1136_001:0580a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩天人四眾及毘沙門天王等一切大眾。",
        "from": "T20n1136_001:0580a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T20n1136_001:0580a10_2",
        "context_with_next_sentence": false
    }
]