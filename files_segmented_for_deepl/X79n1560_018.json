[
    {
        "source_sentence": "禪林僧寶傳卷第十八",
        "from": "X79n1560_018:0528b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋明白庵居沙門　惠洪　撰",
        "from": "X79n1560_018:0528b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺璉禪師",
        "from": "X79n1560_018:0528b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪師名懷璉。",
        "from": "X79n1560_018:0528b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字器之。",
        "from": "X79n1560_018:0528b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漳州陳氏子也。",
        "from": "X79n1560_018:0528b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初其母禱於泗州僧伽像。",
        "from": "X79n1560_018:0528b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求得之。",
        "from": "X79n1560_018:0528b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故其小字泗州。",
        "from": "X79n1560_018:0528b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼有遠韻。",
        "from": "X79n1560_018:0528b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聦慧絕人。",
        "from": "X79n1560_018:0528b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長為沙門。",
        "from": "X79n1560_018:0528b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "工翰墨聲稱甚著。",
        "from": "X79n1560_018:0528b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "游方愛衡嶽勝絕。",
        "from": "X79n1560_018:0528b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舘于三生藏有年。",
        "from": "X79n1560_018:0528b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叢林號璉三生。",
        "from": "X79n1560_018:0528b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞南昌石門澄禪師者。",
        "from": "X79n1560_018:0528b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五祖戒公之嫡子也。",
        "from": "X79n1560_018:0528b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往拜謁。",
        "from": "X79n1560_018:0528b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師事之十餘年。",
        "from": "X79n1560_018:0528b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去游廬山圓通。",
        "from": "X79n1560_018:0528b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又掌書記於訥禪師所。",
        "from": "X79n1560_018:0528b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇祐二年正月。",
        "from": "X79n1560_018:0528b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有詔。",
        "from": "X79n1560_018:0528b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住京師十方淨因禪院。",
        "from": "X79n1560_018:0528b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二月十九日。",
        "from": "X79n1560_018:0528b10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召對化成殿。",
        "from": "X79n1560_018:0528b10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問佛法大意。",
        "from": "X79n1560_018:0528b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏對稱旨。",
        "from": "X79n1560_018:0528b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜號大覺禪師。",
        "from": "X79n1560_018:0528b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋畢傳宣。",
        "from": "X79n1560_018:0528b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "效南方禪林儀範。",
        "from": "X79n1560_018:0528b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開堂演法。",
        "from": "X79n1560_018:0528b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又宣左街副僧錄。",
        "from": "X79n1560_018:0528b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲大師清滿。",
        "from": "X79n1560_018:0528b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟白倡曰。",
        "from": "X79n1560_018:0528b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝苑春迴。",
        "from": "X79n1560_018:0528b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇家會啟。",
        "from": "X79n1560_018:0528b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬乘既臨於舜殿。",
        "from": "X79n1560_018:0528b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩街獲奉於堯眉。",
        "from": "X79n1560_018:0528b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰當和煦之辰。",
        "from": "X79n1560_018:0528b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正是闡揚之日。",
        "from": "X79n1560_018:0528b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣談祖道。",
        "from": "X79n1560_018:0528b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上副宸衷。",
        "from": "X79n1560_018:0528b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問答罷乃曰。",
        "from": "X79n1560_018:0528b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古佛堂中曾無異說。",
        "from": "X79n1560_018:0528b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流通句內誠有多談。",
        "from": "X79n1560_018:0528b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得之者妙用無虧。",
        "from": "X79n1560_018:0528b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失之者觸途成滯。",
        "from": "X79n1560_018:0528b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以谿山雲月。",
        "from": "X79n1560_018:0528b17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處處同風。",
        "from": "X79n1560_018:0528b17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水鳥樹林。",
        "from": "X79n1560_018:0528b17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭頭顯道。",
        "from": "X79n1560_018:0528b17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若向迦葉門下。",
        "from": "X79n1560_018:0528b18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直得堯風蕩蕩。",
        "from": "X79n1560_018:0528b18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舜日高明。",
        "from": "X79n1560_018:0528b18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "野老謳謌。",
        "from": "X79n1560_018:0528b18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漁人鼓舞。",
        "from": "X79n1560_018:0528b19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此之時。",
        "from": "X79n1560_018:0528b19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純樂無為之化。",
        "from": "X79n1560_018:0528b19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焉知有恁麼事。",
        "from": "X79n1560_018:0528b19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇情大悅。",
        "from": "X79n1560_018:0528b20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與璉問答詩頌。",
        "from": "X79n1560_018:0528b20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書以賜之。",
        "from": "X79n1560_018:0528b20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡十有七篇。",
        "from": "X79n1560_018:0528b20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至和中。",
        "from": "X79n1560_018:0528b21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上書獻偈。",
        "from": "X79n1560_018:0528b21_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞歸老山中。",
        "from": "X79n1560_018:0528b21_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "X79n1560_018:0528b21_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千簇雲山萬壑流。",
        "from": "X79n1560_018:0528b21_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸心終老此峯頭。",
        "from": "X79n1560_018:0528b22_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘生願祝無疆壽。",
        "from": "X79n1560_018:0528b22_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一炷清香滿石樓　上曰。",
        "from": "X79n1560_018:0528b22_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山即如如體也。",
        "from": "X79n1560_018:0528b23_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將安歸乎。",
        "from": "X79n1560_018:0528b23_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許。",
        "from": "X79n1560_018:0528b23_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修撰孫覺莘老。",
        "from": "X79n1560_018:0528b23_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書問宗教。",
        "from": "X79n1560_018:0528b24_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉答之書。",
        "from": "X79n1560_018:0528b24_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其略曰。",
        "from": "X79n1560_018:0528b24_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙道之意。",
        "from": "X79n1560_018:0528b24_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人甞寓之於易。",
        "from": "X79n1560_018:0528b24_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至周衰先王之法壞。",
        "from": "X79n1560_018:0528c01_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮義亡。",
        "from": "X79n1560_018:0528c01_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後奇言異術。",
        "from": "X79n1560_018:0528c01_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間出而亂俗。",
        "from": "X79n1560_018:0528c02_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迨我釋迦入中土。",
        "from": "X79n1560_018:0528c02_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醇以第一義示人。",
        "from": "X79n1560_018:0528c02_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而始末設為慈悲。",
        "from": "X79n1560_018:0528c03_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以化眾生。",
        "from": "X79n1560_018:0528c03_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦所以趣時也。",
        "from": "X79n1560_018:0528c03_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自生民以來。",
        "from": "X79n1560_018:0528c03_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳樸未散。",
        "from": "X79n1560_018:0528c04_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則三皇之教簡而素春也。",
        "from": "X79n1560_018:0528c04_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及情竇日鑿。",
        "from": "X79n1560_018:0528c04_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則五帝之教詳而文夏也。",
        "from": "X79n1560_018:0528c05_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時與世異。",
        "from": "X79n1560_018:0528c05_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情隨日遷。",
        "from": "X79n1560_018:0528c05_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故三王之教密而嚴秋也。",
        "from": "X79n1560_018:0528c06_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔商周之誥誓。",
        "from": "X79n1560_018:0528c06_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後世學者。",
        "from": "X79n1560_018:0528c06_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有所難曉。",
        "from": "X79n1560_018:0528c07_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼當時人民。",
        "from": "X79n1560_018:0528c07_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽之而不違。",
        "from": "X79n1560_018:0528c07_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則俗與今如何也。",
        "from": "X79n1560_018:0528c07_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及其弊而為秦漢也。",
        "from": "X79n1560_018:0528c08_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無所不至。",
        "from": "X79n1560_018:0528c08_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而天下有不忍願聞者。",
        "from": "X79n1560_018:0528c08_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是我佛如來。",
        "from": "X79n1560_018:0528c09_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一推之以性命之理。",
        "from": "X79n1560_018:0528c09_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教之以慈悲之行冬也。",
        "from": "X79n1560_018:0528c09_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天有四時循環。",
        "from": "X79n1560_018:0528c10_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以生成萬物。",
        "from": "X79n1560_018:0528c10_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而聖人之教。",
        "from": "X79n1560_018:0528c10_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迭相扶持。",
        "from": "X79n1560_018:0528c11_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以化成天下。",
        "from": "X79n1560_018:0528c11_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶是而已矣。",
        "from": "X79n1560_018:0528c11_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至其極也。",
        "from": "X79n1560_018:0528c11_90",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不能無弊。",
        "from": "X79n1560_018:0528c12_91",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弊迹也。",
        "from": "X79n1560_018:0528c12_92",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道則一耳。",
        "from": "X79n1560_018:0528c12_93",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要當有聖賢者。",
        "from": "X79n1560_018:0528c12_94",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世起而救之也。",
        "from": "X79n1560_018:0528c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自秦漢至今。",
        "from": "X79n1560_018:0528c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千有餘歲。",
        "from": "X79n1560_018:0528c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風俗靡靡愈薄。",
        "from": "X79n1560_018:0528c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人之教裂而鼎立。",
        "from": "X79n1560_018:0528c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相詆訾。",
        "from": "X79n1560_018:0528c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知所從。",
        "from": "X79n1560_018:0528c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大道寥寥莫知返。",
        "from": "X79n1560_018:0528c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良可歎也。",
        "from": "X79n1560_018:0528c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉雖以出世法度人。",
        "from": "X79n1560_018:0528c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而持律嚴甚。",
        "from": "X79n1560_018:0528c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上甞賜以龍腦鉢盂。",
        "from": "X79n1560_018:0528c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉對使者焚之曰。",
        "from": "X79n1560_018:0528c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾法以壞色衣。",
        "from": "X79n1560_018:0528c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瓦鉢食。",
        "from": "X79n1560_018:0528c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此鉢非法。",
        "from": "X79n1560_018:0528c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使者歸奏　上嘉歎久之。",
        "from": "X79n1560_018:0528c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉居虔服玩。",
        "from": "X79n1560_018:0528c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可以化寶坊也。",
        "from": "X79n1560_018:0528c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而皆不為。",
        "from": "X79n1560_018:0528c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨於都城之西。",
        "from": "X79n1560_018:0528c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為精舍。",
        "from": "X79n1560_018:0528c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "容百許人而已。",
        "from": "X79n1560_018:0528c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有曉舜禪師。",
        "from": "X79n1560_018:0528c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住捿賢。",
        "from": "X79n1560_018:0528c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為郡吏臨以事民其衣。",
        "from": "X79n1560_018:0528c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "走依璉。",
        "from": "X79n1560_018:0528c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉舘于正寢。",
        "from": "X79n1560_018:0528c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而處偏室。",
        "from": "X79n1560_018:0528c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執弟子禮。",
        "from": "X79n1560_018:0528c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚恭。",
        "from": "X79n1560_018:0528c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王公貴人來候者。",
        "from": "X79n1560_018:0528c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆怪之。",
        "from": "X79n1560_018:0528c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉具以實對曰。",
        "from": "X79n1560_018:0528c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾少甞問道於舜。",
        "from": "X79n1560_018:0528c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今其不幸。",
        "from": "X79n1560_018:0528c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其可以像服。",
        "from": "X79n1560_018:0528c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二吾心哉。",
        "from": "X79n1560_018:0528c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞者歎服　仁廟知之。",
        "from": "X79n1560_018:0528c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜舜再落髮。",
        "from": "X79n1560_018:0528c23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍居棲賢寺。",
        "from": "X79n1560_018:0528c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治平中。",
        "from": "X79n1560_018:0528c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉再乞還山堅甚　英宗皇帝留之不可。",
        "from": "X79n1560_018:0528c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔許自便。",
        "from": "X79n1560_018:0528c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉既渡江。",
        "from": "X79n1560_018:0529a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少留于金山西湖。",
        "from": "X79n1560_018:0529a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂歸老於四明之育王山廣利寺。",
        "from": "X79n1560_018:0529a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明之人。",
        "from": "X79n1560_018:0529a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相與出力。",
        "from": "X79n1560_018:0529a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建大閣藏所賜詩頌。",
        "from": "X79n1560_018:0529a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "榜之曰宸奎。",
        "from": "X79n1560_018:0529a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命翰林學土兼侍讀端明殿學士蘇軾。",
        "from": "X79n1560_018:0529a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為之記。",
        "from": "X79n1560_018:0529a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時京師始建寶文閣。",
        "from": "X79n1560_018:0529a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔取其副本藏焉。",
        "from": "X79n1560_018:0529a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉歸山二十餘年。",
        "from": "X79n1560_018:0529a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年八十二。",
        "from": "X79n1560_018:0529a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無疾而化。",
        "from": "X79n1560_018:0529a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贊曰。",
        "from": "X79n1560_018:0529a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "璉公生長於寒鄉。",
        "from": "X79n1560_018:0529a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棲遲於荒遠。",
        "from": "X79n1560_018:0529a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉢飯布衲。",
        "from": "X79n1560_018:0529a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若將終身。",
        "from": "X79n1560_018:0529a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一旦道契　主上。",
        "from": "X79n1560_018:0529a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名落天下。",
        "from": "X79n1560_018:0529a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能焚龍腦。",
        "from": "X79n1560_018:0529a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讓正寢。",
        "from": "X79n1560_018:0529a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非其素所畜養。",
        "from": "X79n1560_018:0529a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大過於人者。",
        "from": "X79n1560_018:0529a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以至是哉。",
        "from": "X79n1560_018:0529a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於與士大夫論宗教。",
        "from": "X79n1560_018:0529a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則指物連類。",
        "from": "X79n1560_018:0529a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "折之以至理。",
        "from": "X79n1560_018:0529a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使其泮然無疑。",
        "from": "X79n1560_018:0529a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則亦知為比丘之大體者歟。",
        "from": "X79n1560_018:0529a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興化銑禪師",
        "from": "X79n1560_018:0529a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪師名紹銑。",
        "from": "X79n1560_018:0529a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泉州人也。",
        "from": "X79n1560_018:0529a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住潭州興化禪寺。",
        "from": "X79n1560_018:0529a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開法嗣北禪賢禪師。",
        "from": "X79n1560_018:0529a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銑有度量。",
        "from": "X79n1560_018:0529a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牧千眾。",
        "from": "X79n1560_018:0529a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如數一二三四。",
        "from": "X79n1560_018:0529a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長沙俗樸質。",
        "from": "X79n1560_018:0529a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初未知飯僧供佛之利。",
        "from": "X79n1560_018:0529a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銑作大會以誘之。",
        "from": "X79n1560_018:0529a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣道俗赴。",
        "from": "X79n1560_018:0529a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之結緣齋。",
        "from": "X79n1560_018:0529a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後効而作者。",
        "from": "X79n1560_018:0529a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月月有之。",
        "from": "X79n1560_018:0529a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殆今不絕。",
        "from": "X79n1560_018:0529a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊湖之民。",
        "from": "X79n1560_018:0529a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向仰之篤。",
        "from": "X79n1560_018:0529a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波及蠻俗。",
        "from": "X79n1560_018:0529a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章丞相惇。",
        "from": "X79n1560_018:0529a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉使荊湖。",
        "from": "X79n1560_018:0529a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開梅山。",
        "from": "X79n1560_018:0529a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與銑偕往。",
        "from": "X79n1560_018:0529a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蠻父老聞銑名。",
        "from": "X79n1560_018:0529a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欽重愛戀。",
        "from": "X79n1560_018:0529a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人人合爪。",
        "from": "X79n1560_018:0529a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽其約束。",
        "from": "X79n1560_018:0529a18_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敢違。",
        "from": "X79n1560_018:0529a18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梅山平。",
        "from": "X79n1560_018:0529a18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銑有力焉。",
        "from": "X79n1560_018:0529a18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "湘南八州之境。",
        "from": "X79n1560_018:0529a18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲度僧數百。",
        "from": "X79n1560_018:0529a19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開壇俱集。",
        "from": "X79n1560_018:0529a19_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以未為大僧。",
        "from": "X79n1560_018:0529a19_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪林皆推擠。",
        "from": "X79n1560_018:0529a19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銑牓其門曰。",
        "from": "X79n1560_018:0529a20_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應沙彌皆得赴飯。",
        "from": "X79n1560_018:0529a20_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自其始至。",
        "from": "X79n1560_018:0529a20_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以及其終。",
        "from": "X79n1560_018:0529a20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十餘年不易。",
        "from": "X79n1560_018:0529a21_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人以為難。",
        "from": "X79n1560_018:0529a21_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時南禪師道價。",
        "from": "X79n1560_018:0529a21_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方增荊湖。",
        "from": "X79n1560_018:0529a21_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衲子奔趨。",
        "from": "X79n1560_018:0529a22_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入江南者。",
        "from": "X79n1560_018:0529a22_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出長沙百里。",
        "from": "X79n1560_018:0529a22_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無託宿所。",
        "from": "X79n1560_018:0529a22_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多為盜劫掠。",
        "from": "X79n1560_018:0529a22_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "路因不通。",
        "from": "X79n1560_018:0529a23_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銑半五十為舘。",
        "from": "X79n1560_018:0529a23_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請僧主之以接納。",
        "from": "X79n1560_018:0529a23_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使得宿食而去。",
        "from": "X79n1560_018:0529a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸方高其為人。",
        "from": "X79n1560_018:0529a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晚得風痺疾。",
        "from": "X79n1560_018:0529a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手不仁。",
        "from": "X79n1560_018:0529a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然猶領住持事。",
        "from": "X79n1560_018:0529b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日同僧眾。",
        "from": "X79n1560_018:0529b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會粥食不懈。",
        "from": "X79n1560_018:0529b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銑以精進為佛事。",
        "from": "X79n1560_018:0529b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公卿禮敬。",
        "from": "X79n1560_018:0529b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為古佛。",
        "from": "X79n1560_018:0529b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元豐三年辛酉九月二十一日。",
        "from": "X79n1560_018:0529b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右脇累足。",
        "from": "X79n1560_018:0529b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手屈枕而化。",
        "from": "X79n1560_018:0529b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍維收舍利。",
        "from": "X79n1560_018:0529b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩目睛不壞。",
        "from": "X79n1560_018:0529b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腸二亦不壞。",
        "from": "X79n1560_018:0529b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益以油火焚之。",
        "from": "X79n1560_018:0529b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鐵帶屈折。",
        "from": "X79n1560_018:0529b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色鮮明。",
        "from": "X79n1560_018:0529b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "併塔之。",
        "from": "X79n1560_018:0529b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱世七十二。",
        "from": "X79n1560_018:0529b05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐六十四夏。",
        "from": "X79n1560_018:0529b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號崇辯大師。",
        "from": "X79n1560_018:0529b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贊曰。",
        "from": "X79n1560_018:0529b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲門臨濟兩宗。",
        "from": "X79n1560_018:0529b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特盛于天下。",
        "from": "X79n1560_018:0529b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而湖湘尤多。",
        "from": "X79n1560_018:0529b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲門之裔。",
        "from": "X79n1560_018:0529b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以宗旨自封。",
        "from": "X79n1560_018:0529b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相詆訾。",
        "from": "X79n1560_018:0529b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北禪賢公。",
        "from": "X79n1560_018:0529b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銑之師也。",
        "from": "X79n1560_018:0529b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢於雲門為四世孫。",
        "from": "X79n1560_018:0529b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而銑獨能以公為心。",
        "from": "X79n1560_018:0529b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中塗設舘。",
        "from": "X79n1560_018:0529b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以待求道。",
        "from": "X79n1560_018:0529b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他宗之輩。",
        "from": "X79n1560_018:0529b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非特矚理甚明。",
        "from": "X79n1560_018:0529b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦抑其中。",
        "from": "X79n1560_018:0529b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有異於人。",
        "from": "X79n1560_018:0529b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故其火化之日。",
        "from": "X79n1560_018:0529b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二腸雙睛。",
        "from": "X79n1560_018:0529b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不壞。",
        "from": "X79n1560_018:0529b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此其驗也。",
        "from": "X79n1560_018:0529b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪林僧寶傳卷第十八",
        "from": "X79n1560_018:0529b13_0",
        "context_with_next_sentence": false
    }
]