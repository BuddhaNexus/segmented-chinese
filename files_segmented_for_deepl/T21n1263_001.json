[
    {
        "source_sentence": "氷揭羅天童子經",
        "from": "T21n1263_001:0291c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進試鴻臚卿大興善寺三藏",
        "from": "T21n1263_001:0291c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門大廣智不空奉　詔譯",
        "from": "T21n1263_001:0291c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行者持此明者。",
        "from": "T21n1263_001:0291c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或能乞食或專喫乳粥或能自食。",
        "from": "T21n1263_001:0291c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於像前持誦滿三十萬遍。",
        "from": "T21n1263_001:0291c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後作火法。",
        "from": "T21n1263_001:0291c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取玉柔作一千八片。",
        "from": "T21n1263_001:0291c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一誦一擲火中燒。",
        "from": "T21n1263_001:0291c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時滿四十日。",
        "from": "T21n1263_001:0291c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證云云所求皆遂。",
        "from": "T21n1263_001:0291c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取玉柔和安悉香作丸。",
        "from": "T21n1263_001:0291c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從黑月八日起首終十四日。",
        "from": "T21n1263_001:0291c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日別三時時別誦一千八遍。",
        "from": "T21n1263_001:0291c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前丸擲火中。",
        "from": "T21n1263_001:0291c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其童子或晝或夜。",
        "from": "T21n1263_001:0291c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必來現身而為伴侶滿一切願。",
        "from": "T21n1263_001:0291c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任意使令無不諧剋。",
        "from": "T21n1263_001:0291c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取安悉香作丸。",
        "from": "T21n1263_001:0291c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七日中每日三時。",
        "from": "T21n1263_001:0291c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時別一千八遍。",
        "from": "T21n1263_001:0291c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一誦一擲一丸火中。",
        "from": "T21n1263_001:0291c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必獲邑主無事不果。",
        "from": "T21n1263_001:0291c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其行者欲行此法時。",
        "from": "T21n1263_001:0291c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應誦七十萬遍。",
        "from": "T21n1263_001:0291c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造像法。",
        "from": "T21n1263_001:0291c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像用白檀香木。",
        "from": "T21n1263_001:0291c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長六指作童子形狀。",
        "from": "T21n1263_001:0291c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手把菓右手垂作滿願掌向外。",
        "from": "T21n1263_001:0291c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置道場中。",
        "from": "T21n1263_001:0291c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作種種飲食乳粥香花供養。",
        "from": "T21n1263_001:0291c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取赤色花。",
        "from": "T21n1263_001:0291c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每花一誦一擲童子身上。",
        "from": "T21n1263_001:0291c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿十萬遍其童子必來現身。",
        "from": "T21n1263_001:0291c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得滿一切願。",
        "from": "T21n1263_001:0291c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日施千人上妙衣食無所闕乏。",
        "from": "T21n1263_001:0291c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法每日三時。",
        "from": "T21n1263_001:0292a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時別取蘇合香作一千八丸。",
        "from": "T21n1263_001:0292a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於火中滿七日已。",
        "from": "T21n1263_001:0292a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其童子現身指授伏藏。",
        "from": "T21n1263_001:0292a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能日日受持獲大利益示其寶藏。",
        "from": "T21n1263_001:0292a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及修羅窟穴亦然。",
        "from": "T21n1263_001:0292a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指授必滿其願得大財寶。",
        "from": "T21n1263_001:0292a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人被拘縶時。",
        "from": "T21n1263_001:0292a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當誦此明即得解脫。",
        "from": "T21n1263_001:0292a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法欲令一切人見即歡喜。",
        "from": "T21n1263_001:0292a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱彼人名誦滿十萬遍即皆歡喜。",
        "from": "T21n1263_001:0292a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取無憂木。",
        "from": "T21n1263_001:0292a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於高山頂上燒之。",
        "from": "T21n1263_001:0292a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和安悉香作一千八丸擲火中。",
        "from": "T21n1263_001:0292a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得安穩成就欲令見即見壽命千歲。",
        "from": "T21n1263_001:0292a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼真言曰。",
        "from": "T21n1263_001:0292a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　[打丁+致]　苾(部必反)　[打丁+致]　儞　娑嚩　訶又一本云。",
        "from": "T21n1263_001:0292a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　[打丁+致]　惹　[打丁+致]　儞　娑嚩　訶其根本契者。",
        "from": "T21n1263_001:0292a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手虛心合掌。",
        "from": "T21n1263_001:0292a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若召請時以禪智三度來去。",
        "from": "T21n1263_001:0292a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若發遣時外撥三度。",
        "from": "T21n1263_001:0292a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請火天明契　真言曰。",
        "from": "T21n1263_001:0292a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　阿　祁那　曳　阿　蘖　阿蘖　莎　訶發遣明曰。",
        "from": "T21n1263_001:0292a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿　祁那　曳　蘖　車　蘖車　莎　訶其契相者。",
        "from": "T21n1263_001:0292a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手屈大指於掌中。",
        "from": "T21n1263_001:0292a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指屈如鉤。",
        "from": "T21n1263_001:0292a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以柱大指背當下節。",
        "from": "T21n1263_001:0292a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘並舒之。",
        "from": "T21n1263_001:0292a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召請時但以頭指三招。",
        "from": "T21n1263_001:0292a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若發遣時外撥三度即是。",
        "from": "T21n1263_001:0292a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身契明曰。",
        "from": "T21n1263_001:0292a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　俱嚕　馱　曩　[合*牛]　惹其契者以右手作拳。",
        "from": "T21n1263_001:0292b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪大指觸身五處即未然護。",
        "from": "T21n1263_001:0292b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氷揭羅天童子經",
        "from": "T21n1263_001:0292b05_0",
        "context_with_next_sentence": false
    }
]