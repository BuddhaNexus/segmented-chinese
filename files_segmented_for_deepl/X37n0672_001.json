[
    {
        "source_sentence": "八大人覺經略解",
        "from": "X37n0672_001:0737b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西土聖賢集　後漢沙門　安世高　譯皇明藕益釋　智旭　解△大文為三。",
        "from": "X37n0672_001:0737b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初總標。",
        "from": "X37n0672_001:0737b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二別明。",
        "from": "X37n0672_001:0737b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三結歎。",
        "from": "X37n0672_001:0737b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今初。",
        "from": "X37n0672_001:0737b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為佛弟子。",
        "from": "X37n0672_001:0737b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於晝夜。",
        "from": "X37n0672_001:0737b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心誦念八大人覺。",
        "from": "X37n0672_001:0737b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不論在家出家。",
        "from": "X37n0672_001:0737b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是歸依於佛。",
        "from": "X37n0672_001:0737b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為佛之弟子。",
        "from": "X37n0672_001:0737b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既為佛子。",
        "from": "X37n0672_001:0737b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即應恒修此八種覺。",
        "from": "X37n0672_001:0737b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言常於晝夜者。",
        "from": "X37n0672_001:0737b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明其功無間斷。",
        "from": "X37n0672_001:0737b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言至心者。",
        "from": "X37n0672_001:0737b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明其親切真誠。",
        "from": "X37n0672_001:0737b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言誦念者。",
        "from": "X37n0672_001:0737b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明其文義淳熟。",
        "from": "X37n0672_001:0737b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記憶不忘也。",
        "from": "X37n0672_001:0737b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八大人覺。",
        "from": "X37n0672_001:0737b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋現結歎文中。",
        "from": "X37n0672_001:0737b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二別明即為八。",
        "from": "X37n0672_001:0737b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初無常無我覺。",
        "from": "X37n0672_001:0737b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一覺悟。",
        "from": "X37n0672_001:0737b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間無常。",
        "from": "X37n0672_001:0737b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土危脆。",
        "from": "X37n0672_001:0737b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大苦空。",
        "from": "X37n0672_001:0737b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五陰無我。",
        "from": "X37n0672_001:0737b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生滅變異。",
        "from": "X37n0672_001:0737b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗偽無主。",
        "from": "X37n0672_001:0737b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心是惡源。",
        "from": "X37n0672_001:0737b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形為罪藪。",
        "from": "X37n0672_001:0737b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀察漸離生死。",
        "from": "X37n0672_001:0737b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此入道之初門。",
        "from": "X37n0672_001:0737b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破我法執之前陣也。",
        "from": "X37n0672_001:0737b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先觀世間無常。",
        "from": "X37n0672_001:0737b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土危脆。",
        "from": "X37n0672_001:0737b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如高岸為谷。",
        "from": "X37n0672_001:0737b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深合為陵等。",
        "from": "X37n0672_001:0737b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於依報無可貪著。",
        "from": "X37n0672_001:0737b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以四大觀身。",
        "from": "X37n0672_001:0737b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地水火風互相陵害。",
        "from": "X37n0672_001:0737b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有四百四病之苦。",
        "from": "X37n0672_001:0737b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各無實性故究竟皆空。",
        "from": "X37n0672_001:0737b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以四陰觀心。",
        "from": "X37n0672_001:0737b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂受想行識。",
        "from": "X37n0672_001:0737b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并此色身。",
        "from": "X37n0672_001:0737b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共名五陰。",
        "from": "X37n0672_001:0737b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中實無我及我所。",
        "from": "X37n0672_001:0737b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是生滅之法。",
        "from": "X37n0672_001:0737b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那剎那遷變轉異。",
        "from": "X37n0672_001:0737b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不實故虗。",
        "from": "X37n0672_001:0737b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非真故偽。",
        "from": "X37n0672_001:0737b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遞相乘代故無主。",
        "from": "X37n0672_001:0737b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於正報無可貪著。",
        "from": "X37n0672_001:0737b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此正報身心。",
        "from": "X37n0672_001:0737c01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惟空愛惜之。",
        "from": "X37n0672_001:0737c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於事無益。",
        "from": "X37n0672_001:0737c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而且一迷六塵緣影為自心相。",
        "from": "X37n0672_001:0737c02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則心便為眾惡之源。",
        "from": "X37n0672_001:0737c02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一迷四大為自身相。",
        "from": "X37n0672_001:0737c03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則形便為眾罪之藪。",
        "from": "X37n0672_001:0737c03_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倘不直下覷破。",
        "from": "X37n0672_001:0737c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "害安有極。",
        "from": "X37n0672_001:0737c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如是觀察。",
        "from": "X37n0672_001:0737c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則身心二執漸輕。",
        "from": "X37n0672_001:0737c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即漸離生死之第一方便也。",
        "from": "X37n0672_001:0737c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二常修少欲覺。",
        "from": "X37n0672_001:0737c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二覺知。",
        "from": "X37n0672_001:0737c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多欲為苦。",
        "from": "X37n0672_001:0737c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死疲勞。",
        "from": "X37n0672_001:0737c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從貪欲起。",
        "from": "X37n0672_001:0737c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少欲無為。",
        "from": "X37n0672_001:0737c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心自在。",
        "from": "X37n0672_001:0737c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此既以第一覺降伏見惑。",
        "from": "X37n0672_001:0737c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以第二覺降伏思惑也。",
        "from": "X37n0672_001:0737c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惑雖多。",
        "from": "X37n0672_001:0737c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲貪為首。",
        "from": "X37n0672_001:0737c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能修少欲。",
        "from": "X37n0672_001:0737c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則可以悟無為而得自在矣。",
        "from": "X37n0672_001:0737c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三知足守道覺。",
        "from": "X37n0672_001:0737c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三覺知。",
        "from": "X37n0672_001:0737c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無厭足。",
        "from": "X37n0672_001:0737c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟得多求。",
        "from": "X37n0672_001:0737c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長罪惡。",
        "from": "X37n0672_001:0737c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩不爾。",
        "from": "X37n0672_001:0737c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常念知足。",
        "from": "X37n0672_001:0737c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安貧守道。",
        "from": "X37n0672_001:0737c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟慧是業。",
        "from": "X37n0672_001:0737c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此既修少欲。",
        "from": "X37n0672_001:0737c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復修知足。",
        "from": "X37n0672_001:0737c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以專心於慧業也。",
        "from": "X37n0672_001:0737c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多欲不知足人。",
        "from": "X37n0672_001:0737c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最能障慧。",
        "from": "X37n0672_001:0737c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於少欲之中。",
        "from": "X37n0672_001:0737c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復知足。",
        "from": "X37n0672_001:0737c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則慧業任運可進矣。",
        "from": "X37n0672_001:0737c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四常行精進覺。",
        "from": "X37n0672_001:0737c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四覺知。",
        "from": "X37n0672_001:0737c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懈怠墜落。",
        "from": "X37n0672_001:0737c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常行精進。",
        "from": "X37n0672_001:0737c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破煩惱惡。",
        "from": "X37n0672_001:0737c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧伏四魔。",
        "from": "X37n0672_001:0737c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出陰界獄。",
        "from": "X37n0672_001:0737c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫所謂少欲知足者。",
        "from": "X37n0672_001:0737c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正欲省其精力以辦出要耳。",
        "from": "X37n0672_001:0737c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倘托言知足而反坐在懈怠坑中。",
        "from": "X37n0672_001:0737c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則墜落不淺矣。",
        "from": "X37n0672_001:0737c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故必常行精進以破見思煩惱。",
        "from": "X37n0672_001:0737c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱之魔既破。",
        "from": "X37n0672_001:0737c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則陰魔天魔死魔皆悉摧伏。",
        "from": "X37n0672_001:0737c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而五陰十八界獄乃可出也。",
        "from": "X37n0672_001:0737c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五多聞智慧覺。",
        "from": "X37n0672_001:0738a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五覺悟。",
        "from": "X37n0672_001:0738a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡生死。",
        "from": "X37n0672_001:0738a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩常念廣學多聞。",
        "from": "X37n0672_001:0738a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長智慧。",
        "from": "X37n0672_001:0738a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就辯才。",
        "from": "X37n0672_001:0738a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教化一切。",
        "from": "X37n0672_001:0738a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉以大樂。",
        "from": "X37n0672_001:0738a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖云精進。",
        "from": "X37n0672_001:0738a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不廣學多聞增長智慧。",
        "from": "X37n0672_001:0738a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則成暗證之愆。",
        "from": "X37n0672_001:0738a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有聞無慧。",
        "from": "X37n0672_001:0738a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如把火自燒。",
        "from": "X37n0672_001:0738a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有慧無聞。",
        "from": "X37n0672_001:0738a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如執刀自割。",
        "from": "X37n0672_001:0738a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞慧具足。",
        "from": "X37n0672_001:0738a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方可自利利他。",
        "from": "X37n0672_001:0738a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六布施平等覺。",
        "from": "X37n0672_001:0738a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六覺知。",
        "from": "X37n0672_001:0738a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧苦多怨。",
        "from": "X37n0672_001:0738a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫結惡緣。",
        "from": "X37n0672_001:0738a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩布施。",
        "from": "X37n0672_001:0738a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等念怨親。",
        "from": "X37n0672_001:0738a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不念舊惡。",
        "from": "X37n0672_001:0738a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不憎惡人。",
        "from": "X37n0672_001:0738a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有智慧。",
        "from": "X37n0672_001:0738a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無福德。",
        "from": "X37n0672_001:0738a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不可以自利利他。",
        "from": "X37n0672_001:0738a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故須具行三檀也。",
        "from": "X37n0672_001:0738a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知貧苦之多怨而行布施。",
        "from": "X37n0672_001:0738a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即財施也。",
        "from": "X37n0672_001:0738a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知怨親之平等而不念不憎。",
        "from": "X37n0672_001:0738a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即無畏施也。",
        "from": "X37n0672_001:0738a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法施已於上文明之。",
        "from": "X37n0672_001:0738a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以財及無畏圓滿三檀耳。",
        "from": "X37n0672_001:0738a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七出家梵行覺。",
        "from": "X37n0672_001:0738a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七覺悟。",
        "from": "X37n0672_001:0738a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五欲過患。",
        "from": "X37n0672_001:0738a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖為俗人。",
        "from": "X37n0672_001:0738a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不染世樂。",
        "from": "X37n0672_001:0738a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常念三衣瓦鉢法器。",
        "from": "X37n0672_001:0738a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志願出家。",
        "from": "X37n0672_001:0738a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守道清白。",
        "from": "X37n0672_001:0738a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行高遠。",
        "from": "X37n0672_001:0738a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲一切。",
        "from": "X37n0672_001:0738a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖修智慧福德。",
        "from": "X37n0672_001:0738a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不永離居家五欲。",
        "from": "X37n0672_001:0738a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不可以紹隆僧寶。",
        "from": "X37n0672_001:0738a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住持佛法。",
        "from": "X37n0672_001:0738a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知三世諸佛。",
        "from": "X37n0672_001:0738a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有不示出家而成道者也。",
        "from": "X37n0672_001:0738a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三衣。",
        "from": "X37n0672_001:0738a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一安陀會。",
        "from": "X37n0672_001:0738a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二優多羅僧。",
        "from": "X37n0672_001:0738a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三僧伽梨也。",
        "from": "X37n0672_001:0738a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然使身雖出家。",
        "from": "X37n0672_001:0738a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不能守道清白。",
        "from": "X37n0672_001:0738a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行高遠。",
        "from": "X37n0672_001:0738a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲一切。",
        "from": "X37n0672_001:0738a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為竊佛形儀。",
        "from": "X37n0672_001:0738a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪加一等。",
        "from": "X37n0672_001:0738a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可不知。",
        "from": "X37n0672_001:0738a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八大心普濟覺。",
        "from": "X37n0672_001:0738a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八覺知。",
        "from": "X37n0672_001:0738a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死熾然。",
        "from": "X37n0672_001:0738a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦惱無量。",
        "from": "X37n0672_001:0738a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發大乘心。",
        "from": "X37n0672_001:0738a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普濟一切。",
        "from": "X37n0672_001:0738a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願代眾生受無量苦。",
        "from": "X37n0672_001:0738b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生畢竟大樂。",
        "from": "X37n0672_001:0738b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復出家。",
        "from": "X37n0672_001:0738b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不發大乘普濟之心。",
        "from": "X37n0672_001:0738b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則慈心不周。",
        "from": "X37n0672_001:0738b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不發代眾生苦之心。",
        "from": "X37n0672_001:0738b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則悲心不切。",
        "from": "X37n0672_001:0738b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲周切。",
        "from": "X37n0672_001:0738b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方是紹佛家業之真子也。",
        "from": "X37n0672_001:0738b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三結歎。",
        "from": "X37n0672_001:0738b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此八事。",
        "from": "X37n0672_001:0738b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是諸佛菩薩大人之所覺悟。",
        "from": "X37n0672_001:0738b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進行道。",
        "from": "X37n0672_001:0738b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲修慧。",
        "from": "X37n0672_001:0738b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘法身船。",
        "from": "X37n0672_001:0738b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至涅槃岸。",
        "from": "X37n0672_001:0738b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復還生死。",
        "from": "X37n0672_001:0738b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度脫眾生。",
        "from": "X37n0672_001:0738b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前八事。",
        "from": "X37n0672_001:0738b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開導一切。",
        "from": "X37n0672_001:0738b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生覺生死苦。",
        "from": "X37n0672_001:0738b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨離五欲。",
        "from": "X37n0672_001:0738b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修心聖道。",
        "from": "X37n0672_001:0738b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛弟子誦此八事。",
        "from": "X37n0672_001:0738b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於念念中。",
        "from": "X37n0672_001:0738b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅無量罪。",
        "from": "X37n0672_001:0738b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進趣菩提。",
        "from": "X37n0672_001:0738b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速登正覺。",
        "from": "X37n0672_001:0738b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永斷生死。",
        "from": "X37n0672_001:0738b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住快樂。",
        "from": "X37n0672_001:0738b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此八事下十六字。",
        "from": "X37n0672_001:0738b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結成名義。",
        "from": "X37n0672_001:0738b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進行道下十六字。",
        "from": "X37n0672_001:0738b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結成自覺功德。",
        "from": "X37n0672_001:0738b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身船。",
        "from": "X37n0672_001:0738b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指所悟性德。",
        "from": "X37n0672_001:0738b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃岸。",
        "from": "X37n0672_001:0738b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指修德所顯也。",
        "from": "X37n0672_001:0738b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復還生死下三十二字。",
        "from": "X37n0672_001:0738b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結成覺他功德。",
        "from": "X37n0672_001:0738b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟自覺方能覺他也。",
        "from": "X37n0672_001:0738b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛弟子下三十二字。",
        "from": "X37n0672_001:0738b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結成誦念功德。",
        "from": "X37n0672_001:0738b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能誦其文。",
        "from": "X37n0672_001:0738b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必能精思其義。",
        "from": "X37n0672_001:0738b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能思其義。",
        "from": "X37n0672_001:0738b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必能以此自覺覺他。",
        "from": "X37n0672_001:0738b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能滅罪而斷生死苦。",
        "from": "X37n0672_001:0738b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣覺而證常住樂也。",
        "from": "X37n0672_001:0738b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八大人覺經略解(終)",
        "from": "X37n0672_001:0738b19_0",
        "context_with_next_sentence": false
    }
]