[
    {
        "source_sentence": "大乘寶要義論卷第二",
        "from": "T32n1635_002:0052b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1635_002:0052b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿傳梵大師賜紫",
        "from": "T32n1635_002:0052b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣法護等奉　詔譯",
        "from": "T32n1635_002:0052b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍世王經云。",
        "from": "T32n1635_002:0052b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者大迦葉白妙吉祥菩薩言譬如初生師子隨生即有力勢。",
        "from": "T32n1635_002:0052b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所向詣或有群鹿。",
        "from": "T32n1635_002:0052b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔聞師子之香。",
        "from": "T32n1635_002:0052b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉奔竄。",
        "from": "T32n1635_002:0052b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使大力龍象若聞師子香時。",
        "from": "T32n1635_002:0052b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逼惱驚怖。",
        "from": "T32n1635_002:0052b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掣拽鎖縛。",
        "from": "T32n1635_002:0052b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎖縛斷已奔馳四向。",
        "from": "T32n1635_002:0052b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山巖地穴遍求隱匿。",
        "from": "T32n1635_002:0052b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水族飛禽聞師子香亦悉驚怖。",
        "from": "T32n1635_002:0052b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥。",
        "from": "T32n1635_002:0052b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩具慧力者亦復如是。",
        "from": "T32n1635_002:0052b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼初發心菩薩纔發大菩提心。",
        "from": "T32n1635_002:0052b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能勝過一切聲聞緣覺。",
        "from": "T32n1635_002:0052b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔宮震動。",
        "from": "T32n1635_002:0052b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天魔咸生恐慄。",
        "from": "T32n1635_002:0052b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以恐慄故而悉不能安止其宮。",
        "from": "T32n1635_002:0052b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶積經云。",
        "from": "T32n1635_002:0052b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0052b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1635_002:0052b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於汝意云何。",
        "from": "T32n1635_002:0052b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬若有人雙斷手足。",
        "from": "T32n1635_002:0052b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能活命不。",
        "from": "T32n1635_002:0052b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難答言。",
        "from": "T32n1635_002:0052b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手足雖斷其命尚活。",
        "from": "T32n1635_002:0052b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0052b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1635_002:0052b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或有人剖裂其心。",
        "from": "T32n1635_002:0052b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人能活命不。",
        "from": "T32n1635_002:0052b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難答言。",
        "from": "T32n1635_002:0052b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不也世尊。",
        "from": "T32n1635_002:0052b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0052b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難汝應當知。",
        "from": "T32n1635_002:0052b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我之弟子大目乾連及舍利子猶如手足。",
        "from": "T32n1635_002:0052b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸菩薩其猶我心。",
        "from": "T32n1635_002:0052b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1635_002:0052b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有菩薩。",
        "from": "T32n1635_002:0052b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御大寶車。",
        "from": "T32n1635_002:0052b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五欲功德作神通游戲。",
        "from": "T32n1635_002:0052b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無有人為其駕御。",
        "from": "T32n1635_002:0052b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來爾時為彼菩薩。",
        "from": "T32n1635_002:0052b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力御其車以進前道。",
        "from": "T32n1635_002:0052c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若舍利子及目乾連修三解脫門。",
        "from": "T32n1635_002:0052c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若經一劫若過一劫。",
        "from": "T32n1635_002:0052c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來不復與其勤力而為策進。",
        "from": "T32n1635_002:0052c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父子合集經云。",
        "from": "T32n1635_002:0052c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苾芻。",
        "from": "T32n1635_002:0052c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有殑伽沙數等諸如來。",
        "from": "T32n1635_002:0052c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於殑伽沙數等劫中。",
        "from": "T32n1635_002:0052c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱讚彼發一切智相應心者諸功德藏。",
        "from": "T32n1635_002:0052c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說不能盡。",
        "from": "T32n1635_002:0052c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1635_002:0052c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來往昔修菩薩行。",
        "from": "T32n1635_002:0052c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾無暫時不發是心。",
        "from": "T32n1635_002:0052c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情悉皆攝受。",
        "from": "T32n1635_002:0052c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨攝受已於諸有情亦復不起所化度想。",
        "from": "T32n1635_002:0052c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有無量諸有情界。",
        "from": "T32n1635_002:0052c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來遍是有情界中。",
        "from": "T32n1635_002:0052c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷修菩薩廣大勝行。",
        "from": "T32n1635_002:0052c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一發心集諸福蘊。",
        "from": "T32n1635_002:0052c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T32n1635_002:0052c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苾芻。",
        "from": "T32n1635_002:0052c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情界無盡。",
        "from": "T32n1635_002:0052c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以有情界無盡故。",
        "from": "T32n1635_002:0052c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來廣修菩薩勝行。",
        "from": "T32n1635_002:0052c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一發心集諸福蘊亦復無盡。",
        "from": "T32n1635_002:0052c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來祕密經云。",
        "from": "T32n1635_002:0052c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩發菩提心修勝行者。",
        "from": "T32n1635_002:0052c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令三寶種不斷不絕。",
        "from": "T32n1635_002:0052c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "T32n1635_002:0052c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩菩提心所生福蘊。",
        "from": "T32n1635_002:0052c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉用迴向一切有情。",
        "from": "T32n1635_002:0052c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是迴向功德滿虛空界。",
        "from": "T32n1635_002:0052c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復過上。",
        "from": "T32n1635_002:0052c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切有情福蘊所攝。",
        "from": "T32n1635_002:0052c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉由菩薩菩提心轉。",
        "from": "T32n1635_002:0052c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法集經云。",
        "from": "T32n1635_002:0052c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩發菩提心覺悟一切法。",
        "from": "T32n1635_002:0052c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知一切法與法界等。",
        "from": "T32n1635_002:0052c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而一切法無所從來。",
        "from": "T32n1635_002:0052c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無所止。",
        "from": "T32n1635_002:0052c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不可知。",
        "from": "T32n1635_002:0052c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然以如量智知法性空。",
        "from": "T32n1635_002:0052c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切有情亦如是覺了。",
        "from": "T32n1635_002:0052c20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若如是發心。",
        "from": "T32n1635_002:0052c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說是為菩薩。",
        "from": "T32n1635_002:0052c21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心。",
        "from": "T32n1635_002:0052c21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利樂一切有情心。",
        "from": "T32n1635_002:0052c21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上心。",
        "from": "T32n1635_002:0052c22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慈柔軟心。",
        "from": "T32n1635_002:0052c22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲無倦心。",
        "from": "T32n1635_002:0052c22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大喜不退心。",
        "from": "T32n1635_002:0052c22_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大捨無垢心。",
        "from": "T32n1635_002:0052c23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空無異作心。",
        "from": "T32n1635_002:0052c23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相寂靜心。",
        "from": "T32n1635_002:0052c23_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無願無住心。",
        "from": "T32n1635_002:0052c24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中應問。",
        "from": "T32n1635_002:0052c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何以少善根迴向一切智。",
        "from": "T32n1635_002:0052c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至坐菩提場。",
        "from": "T32n1635_002:0052c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間而不盡邪。",
        "from": "T32n1635_002:0052c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答如無盡意經云。",
        "from": "T32n1635_002:0052c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告尊者舍利子言。",
        "from": "T32n1635_002:0052c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如一滴水入大海中乃至窮劫。",
        "from": "T32n1635_002:0052c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間而不能盡。",
        "from": "T32n1635_002:0052c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩以少善根迴向一切智亦復如是。",
        "from": "T32n1635_002:0052c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至坐菩提場。",
        "from": "T32n1635_002:0052c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間亦不能盡。",
        "from": "T32n1635_002:0053a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善巧方便經云。",
        "from": "T32n1635_002:0053a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有菩薩見貧窮者。",
        "from": "T32n1635_002:0053a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起悲愍心施以少飯。",
        "from": "T32n1635_002:0053a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說。",
        "from": "T32n1635_002:0053a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心廣大名最上施。",
        "from": "T32n1635_002:0053a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況諸所施法。",
        "from": "T32n1635_002:0053a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其施雖少而。",
        "from": "T32n1635_002:0053a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切智心功德無量。",
        "from": "T32n1635_002:0053a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢劫經云。",
        "from": "T32n1635_002:0053a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "星王如來於聲授如來所。",
        "from": "T32n1635_002:0053a04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發菩提心。",
        "from": "T32n1635_002:0053a05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼星王如來昔為牧牛人。",
        "from": "T32n1635_002:0053a05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以末俱羅華供施因緣從是發心。",
        "from": "T32n1635_002:0053a06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名稱如來於電光如來所。",
        "from": "T32n1635_002:0053a07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發菩提心。",
        "from": "T32n1635_002:0053a07_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼名稱如來昔為織師。",
        "from": "T32n1635_002:0053a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以妙[疊*毛]邊縷供施因緣從是發心。",
        "from": "T32n1635_002:0053a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明焰如來於無邊光如來所。",
        "from": "T32n1635_002:0053a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發菩提心。",
        "from": "T32n1635_002:0053a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼明焰如來昔為守城人。",
        "from": "T32n1635_002:0053a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一草燈供施因緣從是發心。",
        "from": "T32n1635_002:0053a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難勝如來於堅固步如來所。",
        "from": "T32n1635_002:0053a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發菩提心。",
        "from": "T32n1635_002:0053a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼難勝如來昔為樵人。",
        "from": "T32n1635_002:0053a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以齒木供施因緣從是發心。",
        "from": "T32n1635_002:0053a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德幢如來於妙稱如來所。",
        "from": "T32n1635_002:0053a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發菩提心。",
        "from": "T32n1635_002:0053a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼功德幢如來昔為汲水人。",
        "from": "T32n1635_002:0053a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以盛水器供施因緣從是發心。",
        "from": "T32n1635_002:0053a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力軍如來於大臂如來所。",
        "from": "T32n1635_002:0053a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發菩提心。",
        "from": "T32n1635_002:0053a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼力軍如來昔為醫王。",
        "from": "T32n1635_002:0053a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一菴摩勒果供施因緣從是發心。",
        "from": "T32n1635_002:0053a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶積經云。",
        "from": "T32n1635_002:0053a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或有人為求阿羅漢果故。",
        "from": "T32n1635_002:0053a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以摩尼寶充滿無邊世界而行布施。",
        "from": "T32n1635_002:0053a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有菩薩乘人見已發一切智相應隨喜心。",
        "from": "T32n1635_002:0053a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此相應隨喜所有福蘊。",
        "from": "T32n1635_002:0053a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比前布施福蘊。",
        "from": "T32n1635_002:0053a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百分不及一。",
        "from": "T32n1635_002:0053a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至烏波尼殺曇分亦不及一。",
        "from": "T32n1635_002:0053a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問云何菩薩而能勝出彼前布施。",
        "from": "T32n1635_002:0053a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答以迴向一切智故。",
        "from": "T32n1635_002:0053a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如般若波羅蜜多經云。",
        "from": "T32n1635_002:0053a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0053a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利子。",
        "from": "T32n1635_002:0053a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩若欲勝出一切聲聞緣覺所修布施持戒忍辱精進禪定智慧者。",
        "from": "T32n1635_002:0053a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當一發一切智相應隨喜心。",
        "from": "T32n1635_002:0053a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修學般若波羅蜜多。",
        "from": "T32n1635_002:0053a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲心而為先導。",
        "from": "T32n1635_002:0053a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸菩薩然後發菩提心。",
        "from": "T32n1635_002:0053a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知。",
        "from": "T32n1635_002:0053a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大菩提心者大悲為先導。",
        "from": "T32n1635_002:0053a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此何能知邪。",
        "from": "T32n1635_002:0053a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如菩薩藏經云。",
        "from": "T32n1635_002:0053b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩欲求菩提應以大悲而為先導。",
        "from": "T32n1635_002:0053b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如士夫所有命根以出入息而為先導。",
        "from": "T32n1635_002:0053b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩摩訶薩亦復如是。",
        "from": "T32n1635_002:0053b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於所集大乘法中以大悲心而為先導。",
        "from": "T32n1635_002:0053b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如轉輪聖王於諸寶中以其輪寶而為先導。",
        "from": "T32n1635_002:0053b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩亦復如是。",
        "from": "T32n1635_002:0053b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切佛法中以大悲心而為先導。",
        "from": "T32n1635_002:0053b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "T32n1635_002:0053b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩於己過失常行伺察。",
        "from": "T32n1635_002:0053b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於他過失悲心護念。",
        "from": "T32n1635_002:0053b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏授所問大乘經云。",
        "from": "T32n1635_002:0053b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0053b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者。",
        "from": "T32n1635_002:0053b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩為欲成就大菩提者。",
        "from": "T32n1635_002:0053b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於一切有情起大悲心。",
        "from": "T32n1635_002:0053b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自身命不生愛著。",
        "from": "T32n1635_002:0053b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切財穀舍宅妻子飲食衣服乘輿床座香華塗香等一切樂具。",
        "from": "T32n1635_002:0053b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉不應著。",
        "from": "T32n1635_002:0053b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1635_002:0053b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長者。",
        "from": "T32n1635_002:0053b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多諸有情於身命等皆生愛著。",
        "from": "T32n1635_002:0053b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以愛著故廣造罪業墮惡趣中。",
        "from": "T32n1635_002:0053b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有情起大悲已。",
        "from": "T32n1635_002:0053b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於身命等不生愛著。",
        "from": "T32n1635_002:0053b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不著故生於善趣。",
        "from": "T32n1635_002:0053b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能於彼一切有情。",
        "from": "T32n1635_002:0053b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心廣行布施等行。",
        "from": "T32n1635_002:0053b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切善法相應而作。",
        "from": "T32n1635_002:0053b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修菩薩者以大悲心而成其身。",
        "from": "T32n1635_002:0053b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云何知。",
        "from": "T32n1635_002:0053b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寶雲經云。",
        "from": "T32n1635_002:0053b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0053b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T32n1635_002:0053b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩具十法者。",
        "from": "T32n1635_002:0053b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為大悲所成其身。",
        "from": "T32n1635_002:0053b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十。",
        "from": "T32n1635_002:0053b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者見一切有情為苦逼迫無救無依無歸趣者。",
        "from": "T32n1635_002:0053b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見已應發大菩提心為作依怙。",
        "from": "T32n1635_002:0053b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者發菩提心已令彼有情得法成就。",
        "from": "T32n1635_002:0053b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者隨所得法為諸有情作大利益。",
        "from": "T32n1635_002:0053b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者慳悋有情令住布施。",
        "from": "T32n1635_002:0053b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者若毀禁戒令修淨戒。",
        "from": "T32n1635_002:0053b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者若多忿恚令住忍辱。",
        "from": "T32n1635_002:0053b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者若多懈怠令發精進。",
        "from": "T32n1635_002:0053b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者若多散亂令修靜慮。",
        "from": "T32n1635_002:0053b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者諸無智慧令得勝慧。",
        "from": "T32n1635_002:0053b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者一切有情極苦所逼。",
        "from": "T32n1635_002:0053b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩普為息除令於菩提不為障難。",
        "from": "T32n1635_002:0053b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名為十法。",
        "from": "T32n1635_002:0053b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持自在王問經云。",
        "from": "T32n1635_002:0053b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩或見一類有情貪愛所纏。",
        "from": "T32n1635_002:0053b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自妻子眷屬而生耽染。",
        "from": "T32n1635_002:0053c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以愛纏故不得自在。",
        "from": "T32n1635_002:0053c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令解愛纏使得自在。",
        "from": "T32n1635_002:0053c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情起忿恚心互相違損生多過失。",
        "from": "T32n1635_002:0053c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令斷除忿恚過失。",
        "from": "T32n1635_002:0053c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情為惡友攝故遠離善友常造罪業。",
        "from": "T32n1635_002:0053c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令常得親近善友遠離惡友。",
        "from": "T32n1635_002:0053c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情最極貪愛不知厭足遠離勝慧。",
        "from": "T32n1635_002:0053c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令斷貪愛發生勝慧。",
        "from": "T32n1635_002:0053c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情謂無業報執斷執常。",
        "from": "T32n1635_002:0053c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令入甚深緣起知諸業行。",
        "from": "T32n1635_002:0053c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情以其無明癡暗所覆取著我人有情壽者。",
        "from": "T32n1635_002:0053c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令慧眼清淨斷諸見執。",
        "from": "T32n1635_002:0053c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情耽味生死執著五蘊如殺害者。",
        "from": "T32n1635_002:0053c17_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令出離一切三界。",
        "from": "T32n1635_002:0053c19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c19_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情為彼魔索之所纏縛若愛若惡皆生住著。",
        "from": "T32n1635_002:0053c20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令解脫魔索纏縛斷除愛惡所住著心。",
        "from": "T32n1635_002:0053c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故。",
        "from": "T32n1635_002:0053c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見一類有情扃涅槃門闢惡趣戶。",
        "from": "T32n1635_002:0053c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如應為說法要。",
        "from": "T32n1635_002:0053c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令彼等闢涅槃門扃惡趣戶。",
        "from": "T32n1635_002:0053c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩為諸有情起大悲心故發菩提心。",
        "from": "T32n1635_002:0053c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於菩薩忍法有毀謗者。",
        "from": "T32n1635_002:0053c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼生欺慢心於法障難。",
        "from": "T32n1635_002:0053c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令菩薩遠離忍法。",
        "from": "T32n1635_002:0053c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩當知是魔事起。",
        "from": "T32n1635_002:0053c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信力入印法門經云。",
        "from": "T32n1635_002:0053c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0053c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥。",
        "from": "T32n1635_002:0053c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人於一切世界極微塵等一切有情所有善根悉為障難。",
        "from": "T32n1635_002:0053c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復於一優婆塞無異師尊具修十善業者彼少善根。",
        "from": "T32n1635_002:0054a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為障難。",
        "from": "T32n1635_002:0054a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人於極微塵等一切世界諸優婆塞所有善根。",
        "from": "T32n1635_002:0054a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉為障難。",
        "from": "T32n1635_002:0054a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於一苾芻所彼少善根。",
        "from": "T32n1635_002:0054a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為障難。",
        "from": "T32n1635_002:0054a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是次第。",
        "from": "T32n1635_002:0054a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於隨信行人隨法行人。",
        "from": "T32n1635_002:0054a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須陀洹斯陀含。",
        "from": "T32n1635_002:0054a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿那含阿羅漢。",
        "from": "T32n1635_002:0054a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八人地及緣覺人。",
        "from": "T32n1635_002:0054a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羊車行菩薩人。",
        "from": "T32n1635_002:0054a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象車行菩薩人。",
        "from": "T32n1635_002:0054a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月神通行菩薩人。",
        "from": "T32n1635_002:0054a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞神通行菩薩人等。",
        "from": "T32n1635_002:0054a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或有人於是極微塵等一切世界諸聲聞神通行菩薩人所諸有善根悉為障難。",
        "from": "T32n1635_002:0054a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於一如來神通行菩薩所。",
        "from": "T32n1635_002:0054a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一善根而為障難。",
        "from": "T32n1635_002:0054a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起欺慢心生忿恚者。",
        "from": "T32n1635_002:0054a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人於十方一切世界極微塵等一切有情挑取其眼。",
        "from": "T32n1635_002:0054a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而復劫奪一切所有資生財物。",
        "from": "T32n1635_002:0054a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於一菩薩所。",
        "from": "T32n1635_002:0054a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起欺慢心而生忿恚。",
        "from": "T32n1635_002:0054a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罵辱毀呰加復觸嬈。",
        "from": "T32n1635_002:0054a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或有人於菩薩所。",
        "from": "T32n1635_002:0054a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨以何緣起欺慢心生忿恚者。",
        "from": "T32n1635_002:0054a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是罪業墮大號叫地獄。",
        "from": "T32n1635_002:0054a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身量五百由旬有五百頭。",
        "from": "T32n1635_002:0054a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一一頭有五百舌。",
        "from": "T32n1635_002:0054a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而一一舌有五百犁以耕其舌。",
        "from": "T32n1635_002:0054a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大熾焰。",
        "from": "T32n1635_002:0054a22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人於三千大千世界一切有情所。",
        "from": "T32n1635_002:0054a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以刀杖而打斫之。",
        "from": "T32n1635_002:0054a23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加復侵奪所有一切資生財物。",
        "from": "T32n1635_002:0054a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於菩薩所起欺慢心。",
        "from": "T32n1635_002:0054a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生忿恚及懷損惱。",
        "from": "T32n1635_002:0054a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人發極惡心。",
        "from": "T32n1635_002:0054a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情不利益心。",
        "from": "T32n1635_002:0054a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於殑伽沙數等世界。",
        "from": "T32n1635_002:0054a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一世界中有殑伽沙數諸阿羅漢而悉殺害。",
        "from": "T32n1635_002:0054a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以殑伽沙數等諸佛塔廟諸寶所成及寶欄楯豎立幢幡殊妙嚴飾皆悉破壞。",
        "from": "T32n1635_002:0054a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於信解大乘菩薩所同植大乘種已。",
        "from": "T32n1635_002:0054b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨以何緣起欺慢心而生忿恚。",
        "from": "T32n1635_002:0054b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罵辱毀呰加復觸嬈。",
        "from": "T32n1635_002:0054b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1635_002:0054b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以菩薩能生諸如來故。",
        "from": "T32n1635_002:0054b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使令佛種不斷絕故。",
        "from": "T32n1635_002:0054b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有毀謗菩薩者。",
        "from": "T32n1635_002:0054b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即毀謗正法。",
        "from": "T32n1635_002:0054b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若毀謗菩薩者。",
        "from": "T32n1635_002:0054b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無別法可攝受故。",
        "from": "T32n1635_002:0054b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯菩薩法而能攝受。",
        "from": "T32n1635_002:0054b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人於十方一切世界諸有情所悉生忿恚。",
        "from": "T32n1635_002:0054b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於菩薩所生忿恚已。",
        "from": "T32n1635_002:0054b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨而背之不樂瞻視。",
        "from": "T32n1635_002:0054b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人於閻浮提一切有情而悉殺害。",
        "from": "T32n1635_002:0054b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加復侵奪一切所有。",
        "from": "T32n1635_002:0054b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人隨於一菩薩所而生毀謗。",
        "from": "T32n1635_002:0054b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之罪倍勝於前阿僧祇數。",
        "from": "T32n1635_002:0054b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏師子吼經云。",
        "from": "T32n1635_002:0054b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩於滿三千大千世界一切有情所。",
        "from": "T32n1635_002:0054b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉生忿恚罵辱捶打。",
        "from": "T32n1635_002:0054b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼菩薩亦復不為壞失損惱。",
        "from": "T32n1635_002:0054b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此菩薩或於一菩薩所一起忿恚心雖極少分。",
        "from": "T32n1635_002:0054b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此菩薩是為陷失損惱。",
        "from": "T32n1635_002:0054b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1635_002:0054b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一菩薩經爾所劫被忍辱鎧。",
        "from": "T32n1635_002:0054b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常不捨離一切智心。",
        "from": "T32n1635_002:0054b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故此菩薩不應於彼暫生忿恚。",
        "from": "T32n1635_002:0054b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥神通游戲經云。",
        "from": "T32n1635_002:0054b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1635_002:0054b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥。",
        "from": "T32n1635_002:0054b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今當知。",
        "from": "T32n1635_002:0054b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸言損害者。",
        "from": "T32n1635_002:0054b21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂百劫中積修善根別別壞失。",
        "from": "T32n1635_002:0054b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名損害。",
        "from": "T32n1635_002:0054b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修菩薩行者應如是知。",
        "from": "T32n1635_002:0054b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於佛世尊所作不饒益得大罪報。",
        "from": "T32n1635_002:0054b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作諸饒益者獲大福蘊。",
        "from": "T32n1635_002:0054b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘寶要義論卷第二",
        "from": "T32n1635_002:0054b25_0",
        "context_with_next_sentence": false
    }
]