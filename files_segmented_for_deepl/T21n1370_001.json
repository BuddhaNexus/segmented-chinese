[
    {
        "source_sentence": "佛說持明藏八大總持王經",
        "from": "T21n1370_001:0886b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1370_001:0886b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1370_001:0886b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊為末世眾生。",
        "from": "T21n1370_001:0886b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說持明藏八大總持王經。",
        "from": "T21n1370_001:0886b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼未來四眾之中諸修行人。",
        "from": "T21n1370_001:0886b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生而作利益。",
        "from": "T21n1370_001:0886b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至求諸悉地而獲成就。",
        "from": "T21n1370_001:0886b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若有行人。",
        "from": "T21n1370_001:0886b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發勇猛心堅固不退。",
        "from": "T21n1370_001:0886b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此八大總持而修行者。",
        "from": "T21n1370_001:0886b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須清淨身心內外嚴潔。",
        "from": "T21n1370_001:0886b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直至成就無令間斷。",
        "from": "T21n1370_001:0886b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若暫間斷不獲成就。",
        "from": "T21n1370_001:0886b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲持誦而修行者。",
        "from": "T21n1370_001:0886b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每持誦時先須稱念。",
        "from": "T21n1370_001:0886c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨一切諸佛及法聖眾。",
        "from": "T21n1370_001:0886c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是歸命三寶已竟即虔心持誦。",
        "from": "T21n1370_001:0886c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1370_001:0886c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨阿致嚩致曩致吒計姹囉計姹計烏嚕摩帝嚕嚕摩帝覩嚕呬隷彌隷薩哩嚩(二合)惹拏(二合)尾波那誐曩莫薩哩嚩(二合)三摩三沒馱曩悉殿覩滿怛囉(二合)波曩莎賀此陀羅尼。",
        "from": "T21n1370_001:0886c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去無量正等正覺二足世尊之所宣說。",
        "from": "T21n1370_001:0886c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲修行於諸眾生。",
        "from": "T21n1370_001:0886c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作息災增益及擁護者。",
        "from": "T21n1370_001:0886c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須持誦精熟。",
        "from": "T21n1370_001:0886c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成先行已有大功力。",
        "from": "T21n1370_001:0886c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可為於眾生。",
        "from": "T21n1370_001:0886c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼法可於中秋時作有大功力。",
        "from": "T21n1370_001:0886c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於是時作者持念易成。",
        "from": "T21n1370_001:0886c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除八大怖畏。",
        "from": "T21n1370_001:0886c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復眾生常持誦者。",
        "from": "T21n1370_001:0886c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒得擁護晝夜安樂。",
        "from": "T21n1370_001:0886c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切不祥悉皆遠離。",
        "from": "T21n1370_001:0886c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德增長無諸苦惱。",
        "from": "T21n1370_001:0886c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在王城或遇兵革。",
        "from": "T21n1370_001:0886c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲脫種種危難者。",
        "from": "T21n1370_001:0886c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擇取吉晨於日午時。",
        "from": "T21n1370_001:0886c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦作法當得解脫。",
        "from": "T21n1370_001:0886c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若被天龍鬼神種種持魅者。",
        "from": "T21n1370_001:0886c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能解除。",
        "from": "T21n1370_001:0886c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以持誦力至於枯樹。",
        "from": "T21n1370_001:0886c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可能令再生花菓。",
        "from": "T21n1370_001:0886c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至令持誦之人。",
        "from": "T21n1370_001:0886c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲宿命通知無量生事。",
        "from": "T21n1370_001:0886c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0886c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普俱入嚩(二合)隷普俱入嚩(二合)隷三野替摩賀(引)薩滿多摩賀入嚩(二合)隷帝護計目計護計目計摩賀設[繼-糸+言]抳囉彌多野設細舍覩摩賀入嚩(二合)隷入嚩(二合)羅帝悉地蹉僧左摩囉抳拏莎賀此陀羅尼。",
        "from": "T21n1370_001:0886c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是行輪迴義成童子之所宣說。",
        "from": "T21n1370_001:0886c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可於十月作持誦法。",
        "from": "T21n1370_001:0886c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生而作利益。",
        "from": "T21n1370_001:0886c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲無量清淨果報復說陀羅尼曰。",
        "from": "T21n1370_001:0886c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酥那替(引)酥吠那那癡(去聲呼下同)烏那癡涅里(二合)癡婆惹儞(引)馱末隷(引)蹉末曩致嚩致怛布(二合)嚕曩吒嚩吒儞(引)那替伊迦拶囉冐地薩際拏囉珂悉地拶泥(去呼)呬[繼-糸+言]泥(同上)尾莎賀此陀羅尼。",
        "from": "T21n1370_001:0886c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是緣覺之所宣說。",
        "from": "T21n1370_001:0887a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可於冬時求清淨處作持誦法。",
        "from": "T21n1370_001:0887a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能擁護一切眾生。",
        "from": "T21n1370_001:0887a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多囉唧嚕嚕唧嚕吠嚕吠囉吒計呬隷彌隷帝隷始隷曩致嚩致俱曩致阿曩末帝摩曩末帝路(引)隷迦娑迦悉迦娑始羅(引)路(引)羅摩馱烏末野尼頗娑頗細(引)唵(引)尾婆嚩帝(引)莎賀此陀羅尼。",
        "from": "T21n1370_001:0887a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是俱胝羅漢之所宣說。",
        "from": "T21n1370_001:0887a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能擁護一切眾生離諸怖畏。",
        "from": "T21n1370_001:0887a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法可於春時持誦。",
        "from": "T21n1370_001:0887a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作息災增益定獲成就。",
        "from": "T21n1370_001:0887a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依法無失功行不退。",
        "from": "T21n1370_001:0887a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可得隱身無人能見。",
        "from": "T21n1370_001:0887a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說心陀羅尼曰。",
        "from": "T21n1370_001:0887a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)按多捺嚩(二合)彌尾婆嚩酥莎賀此心明以所求事。",
        "from": "T21n1370_001:0887a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復稱名誦九洛叉所求必遂。",
        "from": "T21n1370_001:0887a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至數滿時備種種香華燃燈。",
        "from": "T21n1370_001:0887a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養佛法僧菩薩緣覺聲聞等。",
        "from": "T21n1370_001:0887a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若乞食者當持鉢北行。",
        "from": "T21n1370_001:0887a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於聚落可次第行乞。",
        "from": "T21n1370_001:0887a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七家為限不得驀越而彼七家所施之後福及七族所供養華可求迦羅尾羅華。",
        "from": "T21n1370_001:0887a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及龍華等而為最上。",
        "from": "T21n1370_001:0887a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑嚩儞娑嚩儞娑嚩曩目契嚕半彌僧呬(引)摩賀迦波禰(引)唵(引)唧(引)隷彌隷唵(引)迦伊底尾儞虞賀[牟*含](引)蹉曩野莎賀此陀羅尼乃是預流之所宣說。",
        "from": "T21n1370_001:0887a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法可於夏時持誦以求成就。",
        "from": "T21n1370_001:0887a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法之處當求屍林。",
        "from": "T21n1370_001:0887a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或兩河間或橋上建立持誦若為他人作擁護者。",
        "from": "T21n1370_001:0887a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先求清淨童女合線貫珠。",
        "from": "T21n1370_001:0887b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一洛叉所求成就。",
        "from": "T21n1370_001:0887b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或取自身左肋上血。",
        "from": "T21n1370_001:0887b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搵白蓮華護摩。",
        "from": "T21n1370_001:0887b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦八百遍所求皆得。",
        "from": "T21n1370_001:0887b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以黑貓兒死豬死人等左眼睛。",
        "from": "T21n1370_001:0887b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同研和合并三金同為丸。",
        "from": "T21n1370_001:0887b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用娑羅樹汁同服。",
        "from": "T21n1370_001:0887b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求必得成就。",
        "from": "T21n1370_001:0887b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿迦細(引)迦細(引)曩迦細(引)誐拏迦羅細(引)鉢囉(二合)拏那旦鉢囉(二合)拏那嚩怛嚩(二合)唵(引)尾馱摩賀(引)尾馱細(引)那閉多那閉嚕嚕弭呬唧隷彌隷阿[口*爾]多[口*爾]拏哩野彌覩野曩謨薩哩嚩(二合)沒馱三沒地三婆嚩(二合)喃莎賀此陀羅尼。",
        "from": "T21n1370_001:0887b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是無能勝菩薩之所宣說。",
        "from": "T21n1370_001:0887b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有志心持誦經其一年。",
        "from": "T21n1370_001:0887b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必獲色力殊勝吉祥安樂。",
        "from": "T21n1370_001:0887b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足功德名稱遠聞。",
        "from": "T21n1370_001:0887b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉旦曩(二合)怛囉(二合)夜野曩謨娜誐彌鼻曩謨囉俱舍嚩哩曳(二合)曩謨馱覩毘藥(二合)迦(引)曳(引)曳(引)阿曩閉尾惹儞(引)具具烏沒馱(二合)佉誐作羯囉(二合)莎賀此陀羅尼。",
        "from": "T21n1370_001:0887b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是阿那含之所宣說。",
        "from": "T21n1370_001:0887b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能救一切病苦。",
        "from": "T21n1370_001:0887b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有患者行人執其手誦此。",
        "from": "T21n1370_001:0887b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持乳汁令服及令洗身。",
        "from": "T21n1370_001:0887b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設臨命終亦可除差。",
        "from": "T21n1370_001:0887b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或呪摩曩尸羅藥。",
        "from": "T21n1370_001:0887b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安病人耳中亦得除差。",
        "from": "T21n1370_001:0887b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人成先行已欲求悉地者。",
        "from": "T21n1370_001:0887b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或執數珠或輪。",
        "from": "T21n1370_001:0887b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依法持誦。",
        "from": "T21n1370_001:0887b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人設使無福。",
        "from": "T21n1370_001:0887b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法力故亦獲成就。",
        "from": "T21n1370_001:0887b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波散儞(引)迦羅里波散儞(引)摩迦(引)里波散儞(引)摩迦(引)里波散儞(引)多迦(引)里多迦(引)里波散儞(引)摩里迦(引)里波散儞(引)嚕羅里波散儞(引)波散曩迦(引)里帝曩謨阿左哩野(二合)波(引)那(引)喃(引)唵(引)波散儞(引)酥路(引)彌計莎賀此陀羅尼我於往昔為菩薩時。",
        "from": "T21n1370_001:0887b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名妙意持明天。",
        "from": "T21n1370_001:0887c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四足中現身。",
        "from": "T21n1370_001:0887c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼而作利益。",
        "from": "T21n1370_001:0887c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有志心受持者所願具足若有眾生造眾惡業當墮畜生者。",
        "from": "T21n1370_001:0887c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼威德力故。",
        "from": "T21n1370_001:0887c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除滅先罪定生人天。",
        "from": "T21n1370_001:0887c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼能成就種種事業。",
        "from": "T21n1370_001:0887c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人欲求成就種種事業者。",
        "from": "T21n1370_001:0887c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須修先行法。",
        "from": "T21n1370_001:0887c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得圓滿已。",
        "from": "T21n1370_001:0887c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後將所求成就物。",
        "from": "T21n1370_001:0887c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大持明王前。",
        "from": "T21n1370_001:0887c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或日三時或六時持誦。",
        "from": "T21n1370_001:0887c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每一時誦千遍為限。",
        "from": "T21n1370_001:0887c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得虧闕直至悉地得悉地已所作圓滿。",
        "from": "T21n1370_001:0887c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲降冤家者。",
        "from": "T21n1370_001:0887c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當面南坐。",
        "from": "T21n1370_001:0887c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手畫冤家頭面。",
        "from": "T21n1370_001:0887c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手按呪之冤自降伏。",
        "from": "T21n1370_001:0887c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人一日三時恒持誦者。",
        "from": "T21n1370_001:0887c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切人欽伏。",
        "from": "T21n1370_001:0887c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人面向南。",
        "from": "T21n1370_001:0887c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以烏麻作護摩者心所求事一一皆得。",
        "from": "T21n1370_001:0887c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以鉢置地手按加持之必獲多施。",
        "from": "T21n1370_001:0887c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若加持酥食之。",
        "from": "T21n1370_001:0887c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不患瘧及常輕安。",
        "from": "T21n1370_001:0887c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若女人無乳。",
        "from": "T21n1370_001:0887c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持酥及鹽食之有乳。",
        "from": "T21n1370_001:0887c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若女人無子。",
        "from": "T21n1370_001:0887c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持栴檀華為粖。",
        "from": "T21n1370_001:0887c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三時點額。",
        "from": "T21n1370_001:0887c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以藥繫項或繫手臂定生福子。",
        "from": "T21n1370_001:0887c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若女人惡性者。",
        "from": "T21n1370_001:0887c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫誦加持之即性改柔善。",
        "from": "T21n1370_001:0887c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若夫惡性者。",
        "from": "T21n1370_001:0887c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妻誦加持之和栴檀華粖令食。",
        "from": "T21n1370_001:0887c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即相欽重。",
        "from": "T21n1370_001:0887c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若人渡水至中流深處。",
        "from": "T21n1370_001:0887c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身力疲乏慮其沈沒。",
        "from": "T21n1370_001:0887c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心若憶念即得淺處。",
        "from": "T21n1370_001:0887c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或加持枯樹再生華葉。",
        "from": "T21n1370_001:0887c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若加持枯池即水自瀰滿。",
        "from": "T21n1370_001:0887c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說陀羅尼曰。",
        "from": "T21n1370_001:0887c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑(引)帝(引)阿迦致尾迦致補(補紺切)囉尼(二合)阿(引)誐帝(引)娑摩(引)呬帝(引)悉地娑三帝(引)三波那(引)赧曩謨(引)娑覩(二合)阿左里阿赧此陀羅尼我於往昔。",
        "from": "T21n1370_001:0887c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為極怒持明王時之所宣說。",
        "from": "T21n1370_001:0888a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人常受持者。",
        "from": "T21n1370_001:0888a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲吉祥勝事。",
        "from": "T21n1370_001:0888a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持誦成先行已取畢鉢羅華尾孕(二合)摩菓藏粖。",
        "from": "T21n1370_001:0888a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後用酥蜜和然。",
        "from": "T21n1370_001:0888a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持乳汁同服。",
        "from": "T21n1370_001:0888a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後持誦七晝夜得大聰明。",
        "from": "T21n1370_001:0888a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以虎及獯狐猫兒猪等。",
        "from": "T21n1370_001:0888a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各取眼睛為粖。",
        "from": "T21n1370_001:0888a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等分合和作丸。",
        "from": "T21n1370_001:0888a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持內於鼻中當得隱身。",
        "from": "T21n1370_001:0888a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以微苦根藥。",
        "from": "T21n1370_001:0888a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與乳蜜同和。",
        "from": "T21n1370_001:0888a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持食之得顏貌不老。",
        "from": "T21n1370_001:0888a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於屍林或獨樹下或四衢道。",
        "from": "T21n1370_001:0888a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是之處不食持誦。",
        "from": "T21n1370_001:0888a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若獲成就當得空中行住。",
        "from": "T21n1370_001:0888a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可遊於欲色天界。",
        "from": "T21n1370_001:0888a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得劍成就而為最上。",
        "from": "T21n1370_001:0888a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於海岸及大河岸。",
        "from": "T21n1370_001:0888a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常食乳汁或肉汁。",
        "from": "T21n1370_001:0888a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦十箇月。",
        "from": "T21n1370_001:0888a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日相應身心不退。",
        "from": "T21n1370_001:0888a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必獲海中河中異寶。",
        "from": "T21n1370_001:0888a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於山上有龍處。",
        "from": "T21n1370_001:0888a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常食菉豆及酥持誦。",
        "from": "T21n1370_001:0888a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得龍送珠金。",
        "from": "T21n1370_001:0888a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於憂曇鉢樹下持誦。",
        "from": "T21n1370_001:0888a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常乞食誦不間斷。",
        "from": "T21n1370_001:0888a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至成就呪酥。",
        "from": "T21n1370_001:0888a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾間成水。",
        "from": "T21n1370_001:0888a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服之得解世間種種之法。",
        "from": "T21n1370_001:0888a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以土捏作師子加持。",
        "from": "T21n1370_001:0888a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得成就乘之可往天界。",
        "from": "T21n1370_001:0888a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸法一一修行。",
        "from": "T21n1370_001:0888a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求成就者。",
        "from": "T21n1370_001:0888a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得先行圓滿已。",
        "from": "T21n1370_001:0888a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法復誦八千遍必獲悉地。",
        "from": "T21n1370_001:0888a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是持明藏八大總持王已。",
        "from": "T21n1370_001:0888a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告阿難言。",
        "from": "T21n1370_001:0888a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此祕密法汝善受持。",
        "from": "T21n1370_001:0888a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使於未來流傳不斷。",
        "from": "T21n1370_001:0888a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令修行者與諸眾生作大利益。",
        "from": "T21n1370_001:0888a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼阿難受佛教勅。",
        "from": "T21n1370_001:0888a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踊躍作禮而退。",
        "from": "T21n1370_001:0888a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說持明藏八大總持王經",
        "from": "T21n1370_001:0888a25_0",
        "context_with_next_sentence": false
    }
]