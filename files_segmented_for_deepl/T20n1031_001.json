[
    {
        "source_sentence": "聖觀自在菩薩心真言瑜伽觀行",
        "from": "T20n1031_001:0004c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌(出大毘盧遮那成道經)",
        "from": "T20n1031_001:0004c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1031_001:0004c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒",
        "from": "T20n1031_001:0004c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正號大廣智大興善寺三藏沙門",
        "from": "T20n1031_001:0004c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空奉　詔譯",
        "from": "T20n1031_001:0004c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫修瑜伽者。",
        "from": "T20n1031_001:0004c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於靜處建立曼荼羅。",
        "from": "T20n1031_001:0004c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香水散灑。",
        "from": "T20n1031_001:0004c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種時華散於壇上。",
        "from": "T20n1031_001:0004c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者先須澡浴著新淨衣。",
        "from": "T20n1031_001:0004c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次入道場對尊像前。",
        "from": "T20n1031_001:0004c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五輪投地發殷重心。",
        "from": "T20n1031_001:0004c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮一切如來及諸菩薩。",
        "from": "T20n1031_001:0004c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結跏趺坐。",
        "from": "T20n1031_001:0004c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想諸佛如在目前。",
        "from": "T20n1031_001:0004c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後至誠懺一切罪。",
        "from": "T20n1031_001:0004c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言。",
        "from": "T20n1031_001:0005a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我某甲自從無始已來。",
        "from": "T20n1031_001:0005a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪迴生死乃至今日。",
        "from": "T20n1031_001:0005a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所造眾罪無量無邊。",
        "from": "T20n1031_001:0005a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自覺知自作教他見作隨喜。",
        "from": "T20n1031_001:0005a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今懺悔不復更造。",
        "from": "T20n1031_001:0005a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛慈悲攝受。",
        "from": "T20n1031_001:0005a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我罪障速得消滅(如是三說)。",
        "from": "T20n1031_001:0005a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應自誓受三歸依戒。",
        "from": "T20n1031_001:0005a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言。",
        "from": "T20n1031_001:0005a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩哀愍護我。",
        "from": "T20n1031_001:0005a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我某甲始從今日。",
        "from": "T20n1031_001:0005a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至當坐菩提道場。",
        "from": "T20n1031_001:0005a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依如來無上三身。",
        "from": "T20n1031_001:0005a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依方廣大乘法藏。",
        "from": "T20n1031_001:0005a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依僧伽諸菩薩眾(如是三說)。",
        "from": "T20n1031_001:0005a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我某甲歸依佛竟歸依法竟歸依僧竟。",
        "from": "T20n1031_001:0005a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今已往乃至成佛。",
        "from": "T20n1031_001:0005a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不歸餘二乘外道。",
        "from": "T20n1031_001:0005a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛慈悲攝受。",
        "from": "T20n1031_001:0005a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應捨身供養。",
        "from": "T20n1031_001:0005a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應作是言。",
        "from": "T20n1031_001:0005a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩願哀愍故。",
        "from": "T20n1031_001:0005a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受於我。",
        "from": "T20n1031_001:0005a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今已往乃至成佛。",
        "from": "T20n1031_001:0005a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我常捨身供養一切如來及諸菩薩。",
        "from": "T20n1031_001:0005a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲哀愍加護(如是三說)。",
        "from": "T20n1031_001:0005a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於最下方空中。",
        "from": "T20n1031_001:0005a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀賀字黑色。",
        "from": "T20n1031_001:0005a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字變成風輪。",
        "from": "T20n1031_001:0005a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其形半月。",
        "from": "T20n1031_001:0005a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於風輪上。",
        "from": "T20n1031_001:0005a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀嚩字白色。",
        "from": "T20n1031_001:0005a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字變成水輪其形圓滿。",
        "from": "T20n1031_001:0005a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於水輪上。",
        "from": "T20n1031_001:0005a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀囉字金色。",
        "from": "T20n1031_001:0005a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字變成猛利金剛杵。",
        "from": "T20n1031_001:0005a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出金剛火焰其形三角。",
        "from": "T20n1031_001:0005a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從下向上至於地輪及以自身。",
        "from": "T20n1031_001:0005a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火焰焚燒唯有灰燼。",
        "from": "T20n1031_001:0005a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以此灰變成金剛輪。",
        "from": "T20n1031_001:0005a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其輪白色堅密。",
        "from": "T20n1031_001:0005a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨量大小其形正方。",
        "from": "T20n1031_001:0005a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於金剛輪上。",
        "from": "T20n1031_001:0005a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想八葉大蓮華。",
        "from": "T20n1031_001:0005a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具寶鬚蘂。",
        "from": "T20n1031_001:0005a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蓮華臺上。",
        "from": "T20n1031_001:0005a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想娑(上)字黃金色。",
        "from": "T20n1031_001:0005a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字具無量光明。",
        "from": "T20n1031_001:0005a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變此娑字成聖觀自在菩薩。",
        "from": "T20n1031_001:0005a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐身如金色。",
        "from": "T20n1031_001:0005a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓光熾盛。",
        "from": "T20n1031_001:0005a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身披輕縠繒綵衣著赤色裙。",
        "from": "T20n1031_001:0005a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手當臍執未敷蓮華。",
        "from": "T20n1031_001:0005a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手當胸作開華葉勢。",
        "from": "T20n1031_001:0005a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具頭冠瓔珞。",
        "from": "T20n1031_001:0005a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首戴無量壽佛住於定相。",
        "from": "T20n1031_001:0005a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀已。",
        "from": "T20n1031_001:0005a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結三昧耶印。",
        "from": "T20n1031_001:0005a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手當心。",
        "from": "T20n1031_001:0005b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密合掌並竪二大指。",
        "from": "T20n1031_001:0005b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫三滿多母馱(引)南(引)阿(上)三(去)銘底哩(二合)三銘三(去)麼(鼻)曳(引)娑嚩(二合引)賀(引)誦真言三遍。",
        "from": "T20n1031_001:0005b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印印五處加持。",
        "from": "T20n1031_001:0005b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂額右肩左肩心喉頂上散之。",
        "from": "T20n1031_001:0005b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印。",
        "from": "T20n1031_001:0005b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能速滿十地行願十波羅蜜。",
        "from": "T20n1031_001:0005b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能見一切如來地。",
        "from": "T20n1031_001:0005b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能超過法道界。",
        "from": "T20n1031_001:0005b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂超過勝解地淨心地如來地(名超過法道界)。",
        "from": "T20n1031_001:0005b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結法界生印。",
        "from": "T20n1031_001:0005b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手各作金剛拳側相著。",
        "from": "T20n1031_001:0005b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二頭指頭側相拄。",
        "from": "T20n1031_001:0005b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於頂上。",
        "from": "T20n1031_001:0005b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於頂上想囕字。",
        "from": "T20n1031_001:0005b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從字流出白色光。",
        "from": "T20n1031_001:0005b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照自身及以內外。",
        "from": "T20n1031_001:0005b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀自身等同法界。",
        "from": "T20n1031_001:0005b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫三(去)滿多母馱(引)南(引)達磨馱(引)都娑嚩(二合)婆(引去)嚩句(引)憾誦真言三遍。",
        "from": "T20n1031_001:0005b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印從頂上便分。",
        "from": "T20n1031_001:0005b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二拳兩邊徐徐下散。",
        "from": "T20n1031_001:0005b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結轉法輪印。",
        "from": "T20n1031_001:0005b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手當心。",
        "from": "T20n1031_001:0005b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "背相附以右押左。",
        "from": "T20n1031_001:0005b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四指互相鉤。",
        "from": "T20n1031_001:0005b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手大拇指。",
        "from": "T20n1031_001:0005b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕於右手掌中。",
        "from": "T20n1031_001:0005b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手大拇指頭相拄。",
        "from": "T20n1031_001:0005b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自身如金剛薩埵菩薩。",
        "from": "T20n1031_001:0005b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執金剛鈴置於左胯上。",
        "from": "T20n1031_001:0005b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持五股杵當心作跳躑勢。",
        "from": "T20n1031_001:0005b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如白月色頂戴五佛冠坐月輪中。",
        "from": "T20n1031_001:0005b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三(去)滿多嚩日囉(二合引)喃(引)嚩日囉(二合引)怛麼(二合)句(引)憾誦真言三遍已。",
        "from": "T20n1031_001:0005b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於頂上散印。",
        "from": "T20n1031_001:0005b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結大日如來劍印。",
        "from": "T20n1031_001:0005b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手當心合掌。",
        "from": "T20n1031_001:0005b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二頭指中節橫相跓。",
        "from": "T20n1031_001:0005b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大拇指。",
        "from": "T20n1031_001:0005b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並押二頭指上節如劍形。",
        "from": "T20n1031_001:0005c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印已。",
        "from": "T20n1031_001:0005c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀自心中有八葉蓮華。",
        "from": "T20n1031_001:0005c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蓮華中想阿(上)字。",
        "from": "T20n1031_001:0005c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放金色光與印相應。",
        "from": "T20n1031_001:0005c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想彼阿(上)字了一切法本來不生。",
        "from": "T20n1031_001:0005c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦真言曰。",
        "from": "T20n1031_001:0005c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三(去)滿多母馱(引)南(引)惡(引)尾(引)囉吽(引)欠誦真言八遍。",
        "from": "T20n1031_001:0005c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印如前加持自身五處。",
        "from": "T20n1031_001:0005c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散印。",
        "from": "T20n1031_001:0005c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結普供養印。",
        "from": "T20n1031_001:0005c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手合掌。",
        "from": "T20n1031_001:0005c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右押左交上節即成。",
        "from": "T20n1031_001:0005c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三(去)滿多母馱(引)南薩嚩他(去引)欠嗢娜蘖(二合)帝颯頗(二合)囉呬(引)[牟*含]誐誐曩劍(平)娑嚩(二合引)賀(引)結印當心。",
        "from": "T20n1031_001:0005c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言五遍。",
        "from": "T20n1031_001:0005c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想從印流出無量無邊香華飲食。",
        "from": "T20n1031_001:0005c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養盡虛空遍法界一切賢聖。",
        "from": "T20n1031_001:0005c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散印。",
        "from": "T20n1031_001:0005c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次觀行布字法。",
        "from": "T20n1031_001:0005c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修瑜伽者應觀想。",
        "from": "T20n1031_001:0005c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身眉間置吽字。",
        "from": "T20n1031_001:0005c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赤金色。",
        "from": "T20n1031_001:0005c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變成白毫相。",
        "from": "T20n1031_001:0005c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於腦交縫內置暗字。",
        "from": "T20n1031_001:0005c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白色光滿其腦中。",
        "from": "T20n1031_001:0005c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上置囕(上)字。",
        "from": "T20n1031_001:0005c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作赤色光分焰上掣。",
        "from": "T20n1031_001:0005c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛頂上應想唵字白色光照法界。",
        "from": "T20n1031_001:0005c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自右足掌置娑嚩(二合)字。",
        "from": "T20n1031_001:0005c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左足掌置賀字。",
        "from": "T20n1031_001:0005c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀自心為菩提心。",
        "from": "T20n1031_001:0005c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離一切我離蘊處界能取所取。",
        "from": "T20n1031_001:0005c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法平等。",
        "from": "T20n1031_001:0005c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知自心本來不生空無自性。",
        "from": "T20n1031_001:0005c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故應當觀察。",
        "from": "T20n1031_001:0005c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心非我人眾生壽者等性。",
        "from": "T20n1031_001:0005c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1031_001:0005c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼我人等性。",
        "from": "T20n1031_001:0005c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所造作無所得故。",
        "from": "T20n1031_001:0005c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我人等本無。",
        "from": "T20n1031_001:0005c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧有自性。",
        "from": "T20n1031_001:0005c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得遠離一切我見。",
        "from": "T20n1031_001:0005c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心亦非蘊處界性。",
        "from": "T20n1031_001:0005c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1031_001:0005c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此蘊等性。",
        "from": "T20n1031_001:0005c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於勝義中實不可得故。",
        "from": "T20n1031_001:0005c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊處界分別自性。",
        "from": "T20n1031_001:0006a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即非彼心。",
        "from": "T20n1031_001:0006a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心亦非能取所取。",
        "from": "T20n1031_001:0006a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非彼能取妄想之心。",
        "from": "T20n1031_001:0006a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非彼所取青黃等相故。",
        "from": "T20n1031_001:0006a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊言。",
        "from": "T20n1031_001:0006a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不住內亦不住外不住中間。",
        "from": "T20n1031_001:0006a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1031_001:0006a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來清淨無分別故。",
        "from": "T20n1031_001:0006a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀察則知自心無我平等。",
        "from": "T20n1031_001:0006a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了一切法本來不生。",
        "from": "T20n1031_001:0006a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離妄分別。",
        "from": "T20n1031_001:0006a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆無自性猶如虛空。",
        "from": "T20n1031_001:0006a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣諸有情思惟愍念。",
        "from": "T20n1031_001:0006a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無始來不知自心本來清淨。",
        "from": "T20n1031_001:0006a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄生分別顛倒鬼魅之所噉嚼。",
        "from": "T20n1031_001:0006a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死中受種種苦。",
        "from": "T20n1031_001:0006a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今云何起大精進。",
        "from": "T20n1031_001:0006a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸有情覺悟自心。",
        "from": "T20n1031_001:0006a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了清淨法。",
        "from": "T20n1031_001:0006a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼遠離虛妄分別。",
        "from": "T20n1031_001:0006a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是大悲為菩提心。",
        "from": "T20n1031_001:0006a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發是心已。",
        "from": "T20n1031_001:0006a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於囉字上具圓點。",
        "from": "T20n1031_001:0006a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為囕字為法界種子。",
        "from": "T20n1031_001:0006a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想二囉字置二眼中。",
        "from": "T20n1031_001:0006a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如盛燈光普照一切。",
        "from": "T20n1031_001:0006a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用此光明智慧之眼。",
        "from": "T20n1031_001:0006a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自心中所置阿(上)字。",
        "from": "T20n1031_001:0006a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了一切法本來不生。",
        "from": "T20n1031_001:0006a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於阿字流出白色光明。",
        "from": "T20n1031_001:0006a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照無邊塵沙世界。",
        "from": "T20n1031_001:0006a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切有情身中無明癡闇。",
        "from": "T20n1031_001:0006a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想自身轉成毘盧遮那如來。",
        "from": "T20n1031_001:0006a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具頭冠瓔珞坐白蓮華。",
        "from": "T20n1031_001:0006a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如金色光明照曜住三摩地。",
        "from": "T20n1031_001:0006a18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應如是觀。",
        "from": "T20n1031_001:0006a18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結觀自在菩薩心印。",
        "from": "T20n1031_001:0006a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手內相叉。",
        "from": "T20n1031_001:0006a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翹竪二大拇指。",
        "from": "T20n1031_001:0006a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印相即成。",
        "from": "T20n1031_001:0006a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印當心。",
        "from": "T20n1031_001:0006a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦觀自在菩薩心真言七遍。",
        "from": "T20n1031_001:0006a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印加持心額喉頂。",
        "from": "T20n1031_001:0006a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0006a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿(去引)嚧(引)力迦(迦半音呼)娑嚩(二合引)賀(引)隨誦真言。",
        "from": "T20n1031_001:0006a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右大拇指向身招之。",
        "from": "T20n1031_001:0006a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成召請即觀本尊心上有圓滿寂靜月輪。",
        "from": "T20n1031_001:0006a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月輪中右旋安布陀羅尼字。",
        "from": "T20n1031_001:0006a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字皆放白色光遍周法界。",
        "from": "T20n1031_001:0006a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光還入行者頂。",
        "from": "T20n1031_001:0006a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於修瑜伽者心月輪中。",
        "from": "T20n1031_001:0006a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前右旋布列了了分明。",
        "from": "T20n1031_001:0006a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字復放光明。",
        "from": "T20n1031_001:0006a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前作觀。",
        "from": "T20n1031_001:0006b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T20n1031_001:0006b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修瑜伽者自身與本尊觀自在菩薩身。",
        "from": "T20n1031_001:0006b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等無差別。",
        "from": "T20n1031_001:0006b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼鏡像不一不異。",
        "from": "T20n1031_001:0006b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應思惟字義。",
        "from": "T20n1031_001:0006b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿(上)字門者一切法本不生故。",
        "from": "T20n1031_001:0006b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囉字門者一切法遠離塵故。",
        "from": "T20n1031_001:0006b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攞字門者一切法相不可得故。",
        "from": "T20n1031_001:0006b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此攞字為加聲。",
        "from": "T20n1031_001:0006b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變成力字。",
        "from": "T20n1031_001:0006b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此力字中。",
        "from": "T20n1031_001:0006b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出迦字。",
        "from": "T20n1031_001:0006b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦字門者一切法無造作故。",
        "from": "T20n1031_001:0006b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如是觀繫心於真言文字之上。",
        "from": "T20n1031_001:0006b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即思字下所詮義門。",
        "from": "T20n1031_001:0006b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂本來不生等如上四義如是作觀終而復始。",
        "from": "T20n1031_001:0006b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為三摩地念誦。",
        "from": "T20n1031_001:0006b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作出聲念者。",
        "from": "T20n1031_001:0006b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言中應作此句。",
        "from": "T20n1031_001:0006b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0006b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿(去引)嚧(引)力迦(力者中含迦字也)枳(引)囉底(二合丁異反下同)[口*落]乞灑弭(去)尾步底銘娜娜娑嚩(二合引)賀次應觀前阿嚧力迦等四字黃金色。",
        "from": "T20n1031_001:0006b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前真言即得增益。",
        "from": "T20n1031_001:0006b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法中所求皆得。",
        "from": "T20n1031_001:0006b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前所觀心中阿(上)字及腦中暗字。",
        "from": "T20n1031_001:0006b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體是一也。",
        "from": "T20n1031_001:0006b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼中囉字頂上囕字。",
        "from": "T20n1031_001:0006b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是四字義。",
        "from": "T20n1031_001:0006b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以成自身等覺句也。",
        "from": "T20n1031_001:0006b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀菩提心。",
        "from": "T20n1031_001:0006b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結前三昧耶印。",
        "from": "T20n1031_001:0006b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及結前法界生轉法輪并劍印等。",
        "from": "T20n1031_001:0006b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持自身五處。",
        "from": "T20n1031_001:0006b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦本真言。",
        "from": "T20n1031_001:0006b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即禮佛發願迴向已出道場。",
        "from": "T20n1031_001:0006b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常轉大乘華嚴般若等教。",
        "from": "T20n1031_001:0006b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及印佛印塔經行。",
        "from": "T20n1031_001:0006b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋遶窣堵波令速成就。",
        "from": "T20n1031_001:0006b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖觀自在菩薩心真言瑜伽觀行儀軌一卷",
        "from": "T20n1031_001:0006b25_0",
        "context_with_next_sentence": false
    }
]