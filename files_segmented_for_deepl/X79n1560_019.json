[
    {
        "source_sentence": "禪林僧寶傳卷第十九",
        "from": "X79n1560_019:0529b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋明白庵居沙門　惠洪　撰",
        "from": "X79n1560_019:0529b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘杭政禪師",
        "from": "X79n1560_019:0529b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政黃牛者。",
        "from": "X79n1560_019:0529b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錢塘人。",
        "from": "X79n1560_019:0529b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住餘杭功臣山。",
        "from": "X79n1560_019:0529b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼孤為童子。",
        "from": "X79n1560_019:0529b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有卓識。",
        "from": "X79n1560_019:0529b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詞語皆出人意表。",
        "from": "X79n1560_019:0529b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其師稱於人。",
        "from": "X79n1560_019:0529b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大檀越奇之。",
        "from": "X79n1560_019:0529b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以度牒施之。",
        "from": "X79n1560_019:0529b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跪奉謝而不受。",
        "from": "X79n1560_019:0529b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其師問故。",
        "from": "X79n1560_019:0529b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X79n1560_019:0529b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩不可輕受。",
        "from": "X79n1560_019:0529b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼非知我者。",
        "from": "X79n1560_019:0529b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特以師之言。",
        "from": "X79n1560_019:0529b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施百千於一童子。",
        "from": "X79n1560_019:0529b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "保其終身。",
        "from": "X79n1560_019:0529b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能施物不責報乎。",
        "from": "X79n1560_019:0529b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來世尊。",
        "from": "X79n1560_019:0529b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大願度生。",
        "from": "X79n1560_019:0529b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有慈蔭。",
        "from": "X79n1560_019:0529b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今妙法蓮華經是也。",
        "from": "X79n1560_019:0529c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當折節誦持。",
        "from": "X79n1560_019:0529c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩併歸一。",
        "from": "X79n1560_019:0529c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於義為安。",
        "from": "X79n1560_019:0529c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其師自是益奇之。",
        "from": "X79n1560_019:0529c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十八。",
        "from": "X79n1560_019:0529c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果以其志。",
        "from": "X79n1560_019:0529c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為大僧。",
        "from": "X79n1560_019:0529c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "游方問道三十年乃罷。",
        "from": "X79n1560_019:0529c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其居功臣山。",
        "from": "X79n1560_019:0529c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞跨一黃犢。",
        "from": "X79n1560_019:0529c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔣侍郎堂。",
        "from": "X79n1560_019:0529c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出守杭州。",
        "from": "X79n1560_019:0529c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與政為方外友。",
        "from": "X79n1560_019:0529c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每來謁。",
        "from": "X79n1560_019:0529c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必巾持掛角上。",
        "from": "X79n1560_019:0529c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "市人爭觀之。",
        "from": "X79n1560_019:0529c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政自若也。",
        "from": "X79n1560_019:0529c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至郡庭下犢。",
        "from": "X79n1560_019:0529c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而談笑終日而去。",
        "from": "X79n1560_019:0529c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日郡有貴客至。",
        "from": "X79n1560_019:0529c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔣公留政曰。",
        "from": "X79n1560_019:0529c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日府有燕飲。",
        "from": "X79n1560_019:0529c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師固奉律。",
        "from": "X79n1560_019:0529c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為我少留一日。",
        "from": "X79n1560_019:0529c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因欵清話。",
        "from": "X79n1560_019:0529c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政諾之。",
        "from": "X79n1560_019:0529c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日使人要之。",
        "from": "X79n1560_019:0529c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留一偈而去矣。",
        "from": "X79n1560_019:0529c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X79n1560_019:0529c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昨日曾將今日期。",
        "from": "X79n1560_019:0529c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出門倚杖又思惟。",
        "from": "X79n1560_019:0529c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為僧只合居嵓谷。",
        "from": "X79n1560_019:0529c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國士筵中甚不宜。",
        "from": "X79n1560_019:0529c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐客皆仰其標致。",
        "from": "X79n1560_019:0529c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作山中偈曰。",
        "from": "X79n1560_019:0529c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橋上山萬層。",
        "from": "X79n1560_019:0529c10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橋下水千里。",
        "from": "X79n1560_019:0529c10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有白鷺鷥。",
        "from": "X79n1560_019:0529c11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見我嘗來此。",
        "from": "X79n1560_019:0529c11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又作送僧偈曰。",
        "from": "X79n1560_019:0529c11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山中何所有。",
        "from": "X79n1560_019:0529c11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嶺上多白雲。",
        "from": "X79n1560_019:0529c12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秖可自怡悅。",
        "from": "X79n1560_019:0529c12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不堪持贈君。",
        "from": "X79n1560_019:0529c12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冬不擁爐。",
        "from": "X79n1560_019:0529c12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以荻花作毬。",
        "from": "X79n1560_019:0529c13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納足其中。",
        "from": "X79n1560_019:0529c13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "客至共之。",
        "from": "X79n1560_019:0529c13_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夏秋好翫月。",
        "from": "X79n1560_019:0529c13_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盤膝大盆中。",
        "from": "X79n1560_019:0529c13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮池上自旋其盆。",
        "from": "X79n1560_019:0529c14_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吟笑達旦。",
        "from": "X79n1560_019:0529c14_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率以為常。",
        "from": "X79n1560_019:0529c14_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "工書筆法勝絕。",
        "from": "X79n1560_019:0529c14_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如晉宋間風流人。",
        "from": "X79n1560_019:0529c15_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞笑學者臨法帖曰。",
        "from": "X79n1560_019:0529c15_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼皆知翰墨為貴者。",
        "from": "X79n1560_019:0529c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其工皆有意。",
        "from": "X79n1560_019:0529c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今童子書畫。",
        "from": "X79n1560_019:0529c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多純筆可法也。",
        "from": "X79n1560_019:0529c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦少游見政字畫。",
        "from": "X79n1560_019:0529c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必収畜之。",
        "from": "X79n1560_019:0529c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有問者曰。",
        "from": "X79n1560_019:0529c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師以禪師名。",
        "from": "X79n1560_019:0529c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃不談禪何也。",
        "from": "X79n1560_019:0529c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰徒費言語吾嬾。",
        "from": "X79n1560_019:0529c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧假曲折。",
        "from": "X79n1560_019:0529c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但日夜煩萬象。",
        "from": "X79n1560_019:0529c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為敷演耳。",
        "from": "X79n1560_019:0529c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言語有間。",
        "from": "X79n1560_019:0529c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此法無盡。",
        "from": "X79n1560_019:0529c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂造物。",
        "from": "X79n1560_019:0529c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡藏也。",
        "from": "X79n1560_019:0529c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九峯鑒韶禪師。",
        "from": "X79n1560_019:0529c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞客政。",
        "from": "X79n1560_019:0529c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韶坦率不事事。",
        "from": "X79n1560_019:0529c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每竊笑之。",
        "from": "X79n1560_019:0529c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夕將臥。",
        "from": "X79n1560_019:0529c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政使人呼。",
        "from": "X79n1560_019:0529c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韶不得已。",
        "from": "X79n1560_019:0529c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顰頞而至。",
        "from": "X79n1560_019:0529c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政曰。",
        "from": "X79n1560_019:0529c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月色如此。",
        "from": "X79n1560_019:0529c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勞生擾擾。",
        "from": "X79n1560_019:0529c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對之者能幾人。",
        "from": "X79n1560_019:0529c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韶唯唯而已。",
        "from": "X79n1560_019:0529c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼童子使熟炙。",
        "from": "X79n1560_019:0529c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韶方饑意作藥石。",
        "from": "X79n1560_019:0529c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之。",
        "from": "X79n1560_019:0529c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃橘皮湯一盃。",
        "from": "X79n1560_019:0529c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韶匿笑去。",
        "from": "X79n1560_019:0529c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰無乃太清乎。",
        "from": "X79n1560_019:0529c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政風調高。",
        "from": "X79n1560_019:0529c24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老益清癯。",
        "from": "X79n1560_019:0529c24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞自贊其像曰。",
        "from": "X79n1560_019:0530a01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貌古形疎倚杖棃。",
        "from": "X79n1560_019:0530a01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分明畫出須菩提。",
        "from": "X79n1560_019:0530a01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解空不許離聲色。",
        "from": "X79n1560_019:0530a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似聽孤猿月下啼。",
        "from": "X79n1560_019:0530a02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西余端禪師",
        "from": "X79n1560_019:0530a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端師子者。",
        "from": "X79n1560_019:0530a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳興人也。",
        "from": "X79n1560_019:0530a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始見弄師子者。",
        "from": "X79n1560_019:0530a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發明心要。",
        "from": "X79n1560_019:0530a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則以綵帛像其皮。",
        "from": "X79n1560_019:0530a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時時著之。",
        "from": "X79n1560_019:0530a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因以為號。",
        "from": "X79n1560_019:0530a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住西余山。",
        "from": "X79n1560_019:0530a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗣姑蘇翠峯月禪師。",
        "from": "X79n1560_019:0530a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西余去湖州密邇。",
        "from": "X79n1560_019:0530a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每雪朝著綵衣入城。",
        "from": "X79n1560_019:0530a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小兒爭譁逐之。",
        "from": "X79n1560_019:0530a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從人乞錢。",
        "from": "X79n1560_019:0530a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得即以散饑寒者。",
        "from": "X79n1560_019:0530a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錢穆父赴官浙東。",
        "from": "X79n1560_019:0530a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見之約明日飯。",
        "from": "X79n1560_019:0530a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端黎明獨往。",
        "from": "X79n1560_019:0530a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "避雨入道旁人家。",
        "from": "X79n1560_019:0530a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼婦出迎。",
        "from": "X79n1560_019:0530a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄其夫至詬逐。",
        "from": "X79n1560_019:0530a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竟為邏卒所收。",
        "from": "X79n1560_019:0530a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穆父吏速客。",
        "from": "X79n1560_019:0530a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見之問故。",
        "from": "X79n1560_019:0530a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X79n1560_019:0530a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩寄聲錢公。",
        "from": "X79n1560_019:0530a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來赴齋中。",
        "from": "X79n1560_019:0530a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗奸情事發。",
        "from": "X79n1560_019:0530a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請自飯。",
        "from": "X79n1560_019:0530a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穆父聞之驚。",
        "from": "X79n1560_019:0530a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且笑顧客曰。",
        "from": "X79n1560_019:0530a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此僧胷中無一點疑事。",
        "from": "X79n1560_019:0530a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又甞見持死雞疾行者。",
        "from": "X79n1560_019:0530a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "挽衣問何之。",
        "from": "X79n1560_019:0530a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰雞為狸害。",
        "from": "X79n1560_019:0530a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法不可食。",
        "from": "X79n1560_019:0530a13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將棄水中。",
        "from": "X79n1560_019:0530a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端苦求之。",
        "from": "X79n1560_019:0530a13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道路聚觀諷。",
        "from": "X79n1560_019:0530a13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X79n1560_019:0530a14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得偈乃可與。",
        "from": "X79n1560_019:0530a14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端跪作祭文曰。",
        "from": "X79n1560_019:0530a14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維靈生有鷹鴉之厄。",
        "from": "X79n1560_019:0530a14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死有湯鑊之灾。",
        "from": "X79n1560_019:0530a15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生時要汝報曉。",
        "from": "X79n1560_019:0530a15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死後無人収埋。",
        "from": "X79n1560_019:0530a15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉為轉化檀施。",
        "from": "X79n1560_019:0530a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施肚為汝作棺材(一本云。",
        "from": "X79n1560_019:0530a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍梨無可布施。",
        "from": "X79n1560_019:0530a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施肚為汝作棺材)。",
        "from": "X79n1560_019:0530a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言卒携雞去。",
        "from": "X79n1560_019:0530a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以施饑者。",
        "from": "X79n1560_019:0530a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能誦法華經。",
        "from": "X79n1560_019:0530a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "湖人爭延之。",
        "from": "X79n1560_019:0530a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必得錢五百乃開秩。",
        "from": "X79n1560_019:0530a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目誦數句。",
        "from": "X79n1560_019:0530a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即持錢地坐去。",
        "from": "X79n1560_019:0530a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "缺薄者易之而去。",
        "from": "X79n1560_019:0530a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好歌漁父詞。",
        "from": "X79n1560_019:0530a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月夕必歌之達旦。",
        "from": "X79n1560_019:0530a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有狂僧號回頭和尚。",
        "from": "X79n1560_019:0530a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左道鼓動流俗。",
        "from": "X79n1560_019:0530a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士大夫亦安其妄。",
        "from": "X79n1560_019:0530a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方對丹陽守呂公肉食。",
        "from": "X79n1560_019:0530a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端竟至指曰。",
        "from": "X79n1560_019:0530a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正當與麼時。",
        "from": "X79n1560_019:0530a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是佛。",
        "from": "X79n1560_019:0530a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回頭不能遽對。",
        "from": "X79n1560_019:0530a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端捶其頭。",
        "from": "X79n1560_019:0530a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推倒乃行。",
        "from": "X79n1560_019:0530a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有妖人號不托。",
        "from": "X79n1560_019:0530a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掘秀州城外地。",
        "from": "X79n1560_019:0530a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛像。",
        "from": "X79n1560_019:0530a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建塔其上。",
        "from": "X79n1560_019:0530a23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傾城信敬。",
        "from": "X79n1560_019:0530a23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端見揕住曰。",
        "from": "X79n1560_019:0530a23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是佛。",
        "from": "X79n1560_019:0530a24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不托擬議。",
        "from": "X79n1560_019:0530a24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端趯之而去。",
        "from": "X79n1560_019:0530a24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章丞相子厚請升座。",
        "from": "X79n1560_019:0530a24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使俞秀老撰疏。",
        "from": "X79n1560_019:0530b01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敘其事。",
        "from": "X79n1560_019:0530b01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X79n1560_019:0530b01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推倒回頭。",
        "from": "X79n1560_019:0530b01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趯翻不托。",
        "from": "X79n1560_019:0530b01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七軸之蓮經未誦。",
        "from": "X79n1560_019:0530b02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一聲之漁父先聞。",
        "from": "X79n1560_019:0530b02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端聽僧官宣至。",
        "from": "X79n1560_019:0530b02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此以手耶揄曰止。",
        "from": "X79n1560_019:0530b03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃坐引聲吟曰。",
        "from": "X79n1560_019:0530b03_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本是瀟湘一釣客。",
        "from": "X79n1560_019:0530b03_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自東自西自南北。",
        "from": "X79n1560_019:0530b04_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾雜然稱善。",
        "from": "X79n1560_019:0530b04_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端顧笑曰。",
        "from": "X79n1560_019:0530b04_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我觀法王法。",
        "from": "X79n1560_019:0530b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法王法如是。",
        "from": "X79n1560_019:0530b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下座。",
        "from": "X79n1560_019:0530b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子厚留飯。",
        "from": "X79n1560_019:0530b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端瞋說偈曰。",
        "from": "X79n1560_019:0530b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章惇章惇。",
        "from": "X79n1560_019:0530b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請我看墳。",
        "from": "X79n1560_019:0530b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我却喫素。",
        "from": "X79n1560_019:0530b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝却喫葷。",
        "from": "X79n1560_019:0530b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子厚為大笑。",
        "from": "X79n1560_019:0530b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時呂太尉吉甫。",
        "from": "X79n1560_019:0530b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦留丹陽。",
        "from": "X79n1560_019:0530b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三人者日過從。",
        "from": "X79n1560_019:0530b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉甫誦禪定功德。",
        "from": "X79n1560_019:0530b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸般若中第一。",
        "from": "X79n1560_019:0530b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰惠卿修之十年。",
        "from": "X79n1560_019:0530b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子厚獨稱。",
        "from": "X79n1560_019:0530b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鍛可忘憂。",
        "from": "X79n1560_019:0530b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽康得僊。",
        "from": "X79n1560_019:0530b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竟作劒解。",
        "from": "X79n1560_019:0530b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端說偈曰。",
        "from": "X79n1560_019:0530b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章公好學仙。",
        "from": "X79n1560_019:0530b09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呂公好坐禪徐六喻擔板。",
        "from": "X79n1560_019:0530b10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各自見一邊聞者傳以為笑樂元祐初。",
        "from": "X79n1560_019:0530b10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓照禪師自京師慧林。",
        "from": "X79n1560_019:0530b11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退歸姑蘇見端於甘露曰汝非端師子乎曰是圓照戲之曰。",
        "from": "X79n1560_019:0530b11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "村裏師子耳端應聲曰。",
        "from": "X79n1560_019:0530b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "村裏師子村裏弄眉毛與眼一齊動開却口。",
        "from": "X79n1560_019:0530b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肚裏直徿[彳*同]不愛人取奉直饒弄到帝王宮也是一場乾打鬨圓照粹美。",
        "from": "X79n1560_019:0530b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不悟其譏也端客無錫。",
        "from": "X79n1560_019:0530b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲歸湖且行江上問。",
        "from": "X79n1560_019:0530b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有湖秀便舡乎篙師曰。",
        "from": "X79n1560_019:0530b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我行常潤舡也端欣然曰。",
        "from": "X79n1560_019:0530b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可。",
        "from": "X79n1560_019:0530b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃附船尾。",
        "from": "X79n1560_019:0530b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高郵秦觀少游聞其高道。",
        "from": "X79n1560_019:0530b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請升座於廣慧端以手自指曰天上無雙月。",
        "from": "X79n1560_019:0530b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間只一僧一堂風冷淡。",
        "from": "X79n1560_019:0530b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千古意分明少游首肯之端高自稱譽。",
        "from": "X79n1560_019:0530b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吐語奇怪。",
        "from": "X79n1560_019:0530b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逸人也病牙久不愈謂眾曰。",
        "from": "X79n1560_019:0530b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日遷化去。",
        "from": "X79n1560_019:0530b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾以為戲語。",
        "from": "X79n1560_019:0530b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請說偈。",
        "from": "X79n1560_019:0530b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端索筆大書曰。",
        "from": "X79n1560_019:0530b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端師子。",
        "from": "X79n1560_019:0530b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太慵懶。",
        "from": "X79n1560_019:0530b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未死牙齒先壞爛。",
        "from": "X79n1560_019:0530b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二時伴眾赴堂。",
        "from": "X79n1560_019:0530b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粥飯都趕不辦。",
        "from": "X79n1560_019:0530b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今得死是便宜。",
        "from": "X79n1560_019:0530b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長眠百事皆不管。",
        "from": "X79n1560_019:0530b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一不著看官。",
        "from": "X79n1560_019:0530b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二不著喫粥飯。",
        "from": "X79n1560_019:0530b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五更遂化。",
        "from": "X79n1560_019:0530b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱世七十二。",
        "from": "X79n1560_019:0530b24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東吳祠之。",
        "from": "X79n1560_019:0530c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為散聖。",
        "from": "X79n1560_019:0530c01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贊曰。",
        "from": "X79n1560_019:0530c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予竄海外三年而還。",
        "from": "X79n1560_019:0530c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叢林頓衰。",
        "from": "X79n1560_019:0530c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耆年物故無餘。",
        "from": "X79n1560_019:0530c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所至鶵道人成阡陌。",
        "from": "X79n1560_019:0530c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆飽食游談。",
        "from": "X79n1560_019:0530c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無根而已。",
        "from": "X79n1560_019:0530c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喟然長想。",
        "from": "X79n1560_019:0530c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如政黃牛端師子輩。",
        "from": "X79n1560_019:0530c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆三十年前。",
        "from": "X79n1560_019:0530c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少叢林者。",
        "from": "X79n1560_019:0530c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然高風逸韻。",
        "from": "X79n1560_019:0530c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且爾。",
        "from": "X79n1560_019:0530c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況其傳法度生者乎。",
        "from": "X79n1560_019:0530c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因載兩士平生大槩。",
        "from": "X79n1560_019:0530c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使後之俊流。",
        "from": "X79n1560_019:0530c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得以覽觀焉。",
        "from": "X79n1560_019:0530c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪林僧寶傳卷第十九",
        "from": "X79n1560_019:0530c08_0",
        "context_with_next_sentence": false
    }
]