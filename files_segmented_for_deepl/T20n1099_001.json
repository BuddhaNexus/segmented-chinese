        "from": "T20n1099_001:0444c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿謨(引)伽(引)野莎(引)賀(引一句)小心陀羅尼曰。",
        "from": "T20n1099_001:0445c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿[口*爾](仁唧切下同)多(引)野莎(引)賀(引一句)心中心陀羅尼曰。",
        "from": "T20n1099_001:0445c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩囉鉢囉(二合)捺(引)野莎(引)賀(引一句)器仗陀羅尼曰。",
        "from": "T20n1099_001:0445c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿波囉(引)[口*爾]多(引)野莎(引)賀(引一句)甲冑陀羅尼曰。",
        "from": "T20n1099_001:0445c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伊唐葛哩摩(二合)酤嚕那謨(引)窣覩(二合)底莎(引)賀(引一句)頭頂陀羅尼曰。",
        "from": "T20n1099_001:0445c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)吽(引)惹野莎(引)賀(引一句)髻陀羅尼曰。",
        "from": "T20n1099_001:0445c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)紇哩(引一句)塞怛賴(三合)路(引)吉也(二合)尾惹野(引二)阿謨(引)伽播(引)設(引)野(三)鉢囉(二合)底訶多紇哩(二合引)郝吽(引)發吒(半音四)世尊我此陀羅尼。",
        "from": "T20n1099_001:0445c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能成就一切事業。",
        "from": "T20n1099_001:0445c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常持誦者所作剋成。",
        "from": "T20n1099_001:0445c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人造五無間業。",
        "from": "T20n1099_001:0445c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人若能日三時中誦此陀羅尼。",
        "from": "T20n1099_001:0445c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸業障悉得清淨。",
        "from": "T20n1099_001:0445c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲作結界法者。",
        "from": "T20n1099_001:0445c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以此陀羅尼加持沈水香依法而用。",
        "from": "T20n1099_001:0445c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲禁止瘧病者。",
        "from": "T20n1099_001:0445c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持灰水。",
        "from": "T20n1099_001:0445c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或佉禰囉木作橛依法而用。",
        "from": "T20n1099_001:0446a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲息除一切病者。",
        "from": "T20n1099_001:0446a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持酥或油或水塗摩等用。",
        "from": "T20n1099_001:0446a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲禁止迦枯哩那鬼所持病者。",
        "from": "T20n1099_001:0446a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持刀依法而用。",
        "from": "T20n1099_001:0446a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲作諸擁護法者。",
        "from": "T20n1099_001:0446a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持線依法而用。",
        "from": "T20n1099_001:0446a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲止腹痛者。",
        "from": "T20n1099_001:0446a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持鹽水依法而飲。",
        "from": "T20n1099_001:0446a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲息除諸惡毒者。",
        "from": "T20n1099_001:0446a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持土或加持水依法而用。",
        "from": "T20n1099_001:0446a06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲除去眼病者。",
        "from": "T20n1099_001:0446a07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持白線隨繫其耳。",
        "from": "T20n1099_001:0446a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲除去齒痛者。",
        "from": "T20n1099_001:0446a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持迦囉尾囉木作齒木用。",
        "from": "T20n1099_001:0446a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲作結界法者。",
        "from": "T20n1099_001:0446a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取五色線加持二十一遍。",
        "from": "T20n1099_001:0446a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佉禰囉木作橛釘四方界。",
        "from": "T20n1099_001:0446a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然取其線絣量界分。",
        "from": "T20n1099_001:0446a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是即結界成就。",
        "from": "T20n1099_001:0446a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲作擁護法者。",
        "from": "T20n1099_001:0446a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加持水或塚間灰。",
        "from": "T20n1099_001:0446a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復淨線隨應當用。",
        "from": "T20n1099_001:0446a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解諸執魅者。",
        "from": "T20n1099_001:0446a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持五色線依法而用。",
        "from": "T20n1099_001:0446a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲除諸瘧病者。",
        "from": "T20n1099_001:0446a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持白線依法而用。",
        "from": "T20n1099_001:0446a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解除瘰癧及諸瘡腫者。",
        "from": "T20n1099_001:0446a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持蓽撥與蜜同和塗摩等用。",
        "from": "T20n1099_001:0446a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又欲除去眼病者。",
        "from": "T20n1099_001:0446a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持香水或甘草水。",
        "from": "T20n1099_001:0446a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或鉢羅舍葉浸水而用。",
        "from": "T20n1099_001:0446a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲息諸鬪戰諍訟者。",
        "from": "T20n1099_001:0446a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持淨水洗滌其面。",
        "from": "T20n1099_001:0446a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲擁護王之國境。",
        "from": "T20n1099_001:0446a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸侵撓得強勝者。",
        "from": "T20n1099_001:0446a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當擇妙好瓶器置潔淨處。",
        "from": "T20n1099_001:0446a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿盛其水設諸供養。",
        "from": "T20n1099_001:0446a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法者著鮮淨衣。",
        "from": "T20n1099_001:0446a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀此陀羅尼而為加持。",
        "from": "T20n1099_001:0446a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後取瓶中水隨處散灑。",
        "from": "T20n1099_001:0446a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得國界安隱災難不生。",
        "from": "T20n1099_001:0446a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人及傍生悉能衛護。",
        "from": "T20n1099_001:0446a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲解諸邪印者。",
        "from": "T20n1099_001:0446a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用栴檀香末加持二十一遍。",
        "from": "T20n1099_001:0446a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點自心間即得解除。",
        "from": "T20n1099_001:0446a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲於自住舍作擁護者。",
        "from": "T20n1099_001:0446a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用蓮華作護摩法。",
        "from": "T20n1099_001:0446a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲調伏諸難調者。",
        "from": "T20n1099_001:0446a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用栴檀香作護摩法。",
        "from": "T20n1099_001:0446a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次成就法。",
        "from": "T20n1099_001:0446a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用勝香最勝香。",
        "from": "T20n1099_001:0446a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏手香帝手香。",
        "from": "T20n1099_001:0446a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩嚕尼香諾俱梨香。",
        "from": "T20n1099_001:0446a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那俱梨香畢利煬虞香。",
        "from": "T20n1099_001:0446a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多誐覽香等。",
        "from": "T20n1099_001:0446a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并月王藥妙喜樂。",
        "from": "T20n1099_001:0446a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪藥大輪藥。",
        "from": "T20n1099_001:0446a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尾瑟努訖蘭多藥。",
        "from": "T20n1099_001:0446b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸香藥取以和合而作一丸。",
        "from": "T20n1099_001:0446b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼加持一百八遍。",
        "from": "T20n1099_001:0446b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人為諸鬼神執魅怖畏。",
        "from": "T20n1099_001:0446b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或帶頂上或帶臂上即能衛護。",
        "from": "T20n1099_001:0446b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有女人將欲產生。",
        "from": "T20n1099_001:0446b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取前香藥碎為其末。",
        "from": "T20n1099_001:0446b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法加持同入水中。",
        "from": "T20n1099_001:0446b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用澡浴即得產生。",
        "from": "T20n1099_001:0446b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝福德子安隱無難。",
        "from": "T20n1099_001:0446b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸不祥事皆得銷滅。",
        "from": "T20n1099_001:0446b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復生已善作擁護。",
        "from": "T20n1099_001:0446b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸苦惱惡毒不生。",
        "from": "T20n1099_001:0446b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有所生速疾除遣。",
        "from": "T20n1099_001:0446b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若初生童子欲作擁護者。",
        "from": "T20n1099_001:0446b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取前香藥丸依法加持。",
        "from": "T20n1099_001:0446b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帶其頂上即能擁護。",
        "from": "T20n1099_001:0446b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲禁止風雲雷雹者。",
        "from": "T20n1099_001:0446b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取嚩嚕尼樹枝。",
        "from": "T20n1099_001:0446b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入淨水中依法加持已。",
        "from": "T20n1099_001:0446b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次執其枝而用散灑。",
        "from": "T20n1099_001:0446b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我此祕密心陀羅尼。",
        "from": "T20n1099_001:0446b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能作最上成就。",
        "from": "T20n1099_001:0446b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所說一切法用悉無不成。",
        "from": "T20n1099_001:0446b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使持誦未精熟者亦得成就。",
        "from": "T20n1099_001:0446b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次宣說本尊成就法。",
        "from": "T20n1099_001:0446b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲見我身求成就者。",
        "from": "T20n1099_001:0446b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於白月十五日依法作幀。",
        "from": "T20n1099_001:0446b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上好不雜彩色畫我形像。",
        "from": "T20n1099_001:0446b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大自在天相。",
        "from": "T20n1099_001:0446b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂戴寶冠鹿皮為絡腋。",
        "from": "T20n1099_001:0446b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切珍寶而為莊嚴。",
        "from": "T20n1099_001:0446b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是畫已依法安布。",
        "from": "T20n1099_001:0446b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當於彼幀像前。",
        "from": "T20n1099_001:0446b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷作曼拏羅。",
        "from": "T20n1099_001:0446b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散諸妙華以八種香安置供養。",
        "from": "T20n1099_001:0446b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復排設六十四種出生飲食。",
        "from": "T20n1099_001:0446b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所用清淨離諸血肉腥雜穢污。",
        "from": "T20n1099_001:0446b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒沈水香。",
        "from": "T20n1099_001:0446b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人應當晝夜不食。",
        "from": "T20n1099_001:0446b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三時澡沐身體著新淨衣。",
        "from": "T20n1099_001:0446b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦心專注獻供養已。",
        "from": "T20n1099_001:0446b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於幀像前念此陀羅尼一千八十遍。",
        "from": "T20n1099_001:0446b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後諦想本尊儀相。",
        "from": "T20n1099_001:0446b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃見自身有大熾焰。",
        "from": "T20n1099_001:0446b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人見已心生歡喜。",
        "from": "T20n1099_001:0446b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾即見我身來現其前。",
        "from": "T20n1099_001:0446b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施諸所求悉令圓滿。",
        "from": "T20n1099_001:0446b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人爾時當用雌黃。",
        "from": "T20n1099_001:0446b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或安膳那藥而用點眼。",
        "from": "T20n1099_001:0446b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能隱身亦得騰空。",
        "from": "T20n1099_001:0446b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在證入不空智莊嚴三摩地門。",
        "from": "T20n1099_001:0446b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸所欲一切所作皆得圓滿。",
        "from": "T20n1099_001:0446c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經已。",
        "from": "T20n1099_001:0446c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖觀自在菩薩摩訶薩。",
        "from": "T20n1099_001:0446c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘自在大自在等梵天眾。",
        "from": "T20n1099_001:0446c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及淨光天子并諸菩薩聲聞一切大會。",
        "from": "T20n1099_001:0446c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T20n1099_001:0446c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說聖觀自在菩薩不空王祕密心陀羅尼經",
        "from": "T20n1099_001:0446c07_0",
        "context_with_next_sentence": false
    }
]