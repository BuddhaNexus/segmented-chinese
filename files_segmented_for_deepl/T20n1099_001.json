[
    {
        "source_sentence": "佛說聖觀自在菩薩不空王祕密",
        "from": "T20n1099_001:0443b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心陀羅尼經",
        "from": "T20n1099_001:0443b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T20n1099_001:0443b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫臣施護等奉　詔譯",
        "from": "T20n1099_001:0443b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1099_001:0443b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊在補陀落迦山聖觀自在菩薩宮中。",
        "from": "T20n1099_001:0443b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有無數大娑羅樹。",
        "from": "T20n1099_001:0443b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多摩羅樹瞻波迦樹。",
        "from": "T20n1099_001:0443b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿輸迦樹阿提目多迦樹。",
        "from": "T20n1099_001:0443b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等種種寶樹而為嚴飾。",
        "from": "T20n1099_001:0443b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾一百八十萬。",
        "from": "T20n1099_001:0443b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩九十俱胝那庾多百千。",
        "from": "T20n1099_001:0443b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有自在大自在等諸梵天子。",
        "from": "T20n1099_001:0443b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無數百千淨光天子。",
        "from": "T20n1099_001:0443b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等眾恭敬圍繞聽受說法。",
        "from": "T20n1099_001:0443b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖觀自在菩薩摩訶薩從座而起。",
        "from": "T20n1099_001:0443b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T20n1099_001:0443b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛合掌恭敬頂禮。",
        "from": "T20n1099_001:0443b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熙怡微笑前白佛言。",
        "from": "T20n1099_001:0443b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我有陀羅尼名不空王是祕密心。",
        "from": "T20n1099_001:0443c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃往過去九十一劫之前。",
        "from": "T20n1099_001:0443c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於普觀世界觀自在王如來所親從聽受。",
        "from": "T20n1099_001:0443c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼如來為無數百千諸梵天子并淨光天子眾。",
        "from": "T20n1099_001:0443c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教授阿耨多羅三藐三菩提法。",
        "from": "T20n1099_001:0443c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於爾時證得不空智等百千三摩地門。",
        "from": "T20n1099_001:0443c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若諸方處有此祕密心陀羅尼宣通流布。",
        "from": "T20n1099_001:0443c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是處有大自在等一萬二千天子密作衛護。",
        "from": "T20n1099_001:0443c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是處即同有諸佛塔。",
        "from": "T20n1099_001:0443c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當尊重恭敬供養。",
        "from": "T20n1099_001:0443c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人以此不空王祕密心陀羅尼廣流布者。",
        "from": "T20n1099_001:0443c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人已於無數俱胝那庾多百千佛所深種善根。",
        "from": "T20n1099_001:0443c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人暫得聞此陀羅尼者。",
        "from": "T20n1099_001:0443c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人設復謗佛謗法。",
        "from": "T20n1099_001:0443c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及謗菩薩聲聞緣覺等諸賢聖。",
        "from": "T20n1099_001:0443c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣造如是極重罪業。",
        "from": "T20n1099_001:0443c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮阿鼻地獄者。",
        "from": "T20n1099_001:0443c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能志心於一日中清淨不食。",
        "from": "T20n1099_001:0443c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法持誦此陀羅尼。",
        "from": "T20n1099_001:0443c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等罪皆得銷滅。",
        "from": "T20n1099_001:0443c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人患諸瘧病。",
        "from": "T20n1099_001:0443c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一日二日乃至七日。",
        "from": "T20n1099_001:0443c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復眼痛耳痛鼻痛頭痛。",
        "from": "T20n1099_001:0443c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復疥癩瘡癬癰疽腫疱。",
        "from": "T20n1099_001:0443c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及為一切非人邪鬼。",
        "from": "T20n1099_001:0443c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執魅持捉禁縛打擲。",
        "from": "T20n1099_001:0443c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪咀期剋邪說惑亂。",
        "from": "T20n1099_001:0443c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以要言之。",
        "from": "T20n1099_001:0443c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總集一切身病心病。",
        "from": "T20n1099_001:0443c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至夢中見不祥事者。",
        "from": "T20n1099_001:0443c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此陀羅尼加持力故。",
        "from": "T20n1099_001:0443c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得銷滅無能為害。",
        "from": "T20n1099_001:0443c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊又復若諸剎帝利婆羅門吠舍首陀。",
        "from": "T20n1099_001:0443c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等族姓中設有諂誑心者。",
        "from": "T20n1099_001:0443c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此陀羅尼亦許聽受書寫讀誦。",
        "from": "T20n1099_001:0443c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切傍生異類。",
        "from": "T20n1099_001:0443c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應為彼念此陀羅尼令其得聞。",
        "from": "T20n1099_001:0443c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞已隨應皆獲利益。",
        "from": "T20n1099_001:0443c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復有諸發生清淨信解心者。",
        "from": "T20n1099_001:0443c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻苾芻尼優婆塞優婆夷。",
        "from": "T20n1099_001:0443c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心聽受此陀羅尼邪。",
        "from": "T20n1099_001:0443c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復有人。",
        "from": "T20n1099_001:0443c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於此陀羅尼祕密章句諦心思念。",
        "from": "T20n1099_001:0443c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時應當離諸過失。",
        "from": "T20n1099_001:0443c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂不謗不讚不生疑惑。",
        "from": "T20n1099_001:0443c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起離我心無久近心。",
        "from": "T20n1099_001:0444a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無造作心無染污心無高下心。",
        "from": "T20n1099_001:0444a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住如是心作念佛觀。",
        "from": "T20n1099_001:0444a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人即於十方各見千佛為現其前。",
        "from": "T20n1099_001:0444a02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若諸白衣舍中。",
        "from": "T20n1099_001:0444a03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有是陀羅尼經處。",
        "from": "T20n1099_001:0444a04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若主若僕見是經已。",
        "from": "T20n1099_001:0444a04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設生輕易或復戲笑。",
        "from": "T20n1099_001:0444a05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我威神力故。",
        "from": "T20n1099_001:0444a05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其自然得聞此陀羅尼聲。",
        "from": "T20n1099_001:0444a05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊譬如有人取栴檀香。",
        "from": "T20n1099_001:0444a06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復龍腦或復麝香。",
        "from": "T20n1099_001:0444a07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持以敲打或復剉斫。",
        "from": "T20n1099_001:0444a07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以呪詞而為呪咀。",
        "from": "T20n1099_001:0444a08_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於麁獷石上而以研磨。",
        "from": "T20n1099_001:0444a08_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用塗身分。",
        "from": "T20n1099_001:0444a09_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有人言。",
        "from": "T20n1099_001:0444a09_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿須敲打剉斫呪呾研磨。",
        "from": "T20n1099_001:0444a09_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "栴檀等香既塗身已。",
        "from": "T20n1099_001:0444a10_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其香常在。",
        "from": "T20n1099_001:0444a10_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我此不空王祕密心陀羅尼亦復如是。",
        "from": "T20n1099_001:0444a10_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設或有人雖生輕易或復戲笑。",
        "from": "T20n1099_001:0444a11_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無誠實心。",
        "from": "T20n1099_001:0444a12_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但能供養此陀羅尼者。",
        "from": "T20n1099_001:0444a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人以是供養善根力故。",
        "from": "T20n1099_001:0444a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世所生常得戒定慧等。",
        "from": "T20n1099_001:0444a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸蘊具足妙香芬馥。",
        "from": "T20n1099_001:0444a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次若有苾芻苾芻尼優婆塞優婆夷等。",
        "from": "T20n1099_001:0444a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲受持此不空王祕密心陀羅尼時。",
        "from": "T20n1099_001:0444a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於白月八日依法安布壇場供養。",
        "from": "T20n1099_001:0444a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行人當須清淨不食。",
        "from": "T20n1099_001:0444a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無緣心誦此祕密心陀羅尼七遍。",
        "from": "T20n1099_001:0444a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當得二十種功德。",
        "from": "T20n1099_001:0444a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者當於富貴中生。",
        "from": "T20n1099_001:0444a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者生已所有宿世業病速得銷滅。",
        "from": "T20n1099_001:0444a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者常得身胑細滑妙好。",
        "from": "T20n1099_001:0444a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根隱密人所愛樂。",
        "from": "T20n1099_001:0444a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者得大財利。",
        "from": "T20n1099_001:0444a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者所有財寶不為盜取。",
        "from": "T20n1099_001:0444a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者所有財寶不為火焚水溺。",
        "from": "T20n1099_001:0444a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者常得田疇增廣。",
        "from": "T20n1099_001:0444a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者其田稼穡不為雷雹損傷。",
        "from": "T20n1099_001:0444a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者其田不為惡雨霖澍。",
        "from": "T20n1099_001:0444a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者色力精神無所損耗。",
        "from": "T20n1099_001:0444a25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一者常得一切眾生尊重愛樂。",
        "from": "T20n1099_001:0444a25_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二者不為一切怨對所怖。",
        "from": "T20n1099_001:0444a26_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三者設有怨對速疾除解。",
        "from": "T20n1099_001:0444a27_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四者不為一切非人所怖。",
        "from": "T20n1099_001:0444a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五者不為惡病纏縛。",
        "from": "T20n1099_001:0444a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六者不為拏枳儞怖。",
        "from": "T20n1099_001:0444a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七者遠離一切煩惱等事。",
        "from": "T20n1099_001:0444a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八者不於水火刀兵毒害中死。",
        "from": "T20n1099_001:0444b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九者在處常得諸賢聖等密作衛護。",
        "from": "T20n1099_001:0444b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十者在在所生常得不離慈悲喜捨。",
        "from": "T20n1099_001:0444b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名為二十種功德。",
        "from": "T20n1099_001:0444b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊若有持誦此陀羅尼者。",
        "from": "T20n1099_001:0444b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別得八種善相。",
        "from": "T20n1099_001:0444b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者臨命終時我作苾芻相為現其前。",
        "from": "T20n1099_001:0444b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者臨命終時目不動亂身心安隱。",
        "from": "T20n1099_001:0444b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者臨命終時手不拏空足不蹴地。",
        "from": "T20n1099_001:0444b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無大小便利穢污狼藉。",
        "from": "T20n1099_001:0444b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者不覆面死。",
        "from": "T20n1099_001:0444b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者臨命終時安住正念。",
        "from": "T20n1099_001:0444b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者臨命終時不離善友。",
        "from": "T20n1099_001:0444b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者命終已後諸佛剎中隨願往生。",
        "from": "T20n1099_001:0444b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者當生獲得無盡辯才。",
        "from": "T20n1099_001:0444b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是名為八種善相。",
        "from": "T20n1099_001:0444b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次世尊。",
        "from": "T20n1099_001:0444b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人能清淨不食。",
        "from": "T20n1099_001:0444b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離五辛一切葷雜。",
        "from": "T20n1099_001:0444b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日三時中念此陀羅尼三遍。",
        "from": "T20n1099_001:0444b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所求皆得成就。",
        "from": "T20n1099_001:0444b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若有人隨應得聞此不空王祕密心陀羅尼正法已。",
        "from": "T20n1099_001:0444b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能斷諸慳嫉除去一切垢染。",
        "from": "T20n1099_001:0444b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發清淨心尊重歸命祕密護持者。",
        "from": "T20n1099_001:0444b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人當得墮菩薩數。",
        "from": "T20n1099_001:0444b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善為眾生作大饒益。",
        "from": "T20n1099_001:0444b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟當成佛菩提果。",
        "from": "T20n1099_001:0444b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此言菩提者即是正慧。",
        "from": "T20n1099_001:0444b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩埵者即是方便。",
        "from": "T20n1099_001:0444b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得如是慧及方便二法具足。",
        "from": "T20n1099_001:0444b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能為眾生作饒益事。",
        "from": "T20n1099_001:0444b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時聖觀自在菩薩摩訶薩復白佛言。",
        "from": "T20n1099_001:0444b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今樂欲於如來前。",
        "from": "T20n1099_001:0444b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣說所有祕密心陀羅尼。",
        "from": "T20n1099_001:0444b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令會中四眾得聞利益安樂。",
        "from": "T20n1099_001:0444b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘一切作罪業者亦獲善利。",
        "from": "T20n1099_001:0444b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告聖觀自在菩薩摩訶薩言。",
        "from": "T20n1099_001:0444b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨大士汝應善說今正是時。",
        "from": "T20n1099_001:0444b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來今日亦當隨喜。",
        "from": "T20n1099_001:0444b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至後末世中。",
        "from": "T20n1099_001:0444b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與修菩薩乘者為善依怙。",
        "from": "T20n1099_001:0444b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時聖觀自在菩薩欣然舉目瞻仰世尊。",
        "from": "T20n1099_001:0444b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前白佛言。",
        "from": "T20n1099_001:0444b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此會諸菩薩眾。",
        "from": "T20n1099_001:0444c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應善諦聽復當歸命。",
        "from": "T20n1099_001:0444c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此解脫輪能與多人利益安樂。",
        "from": "T20n1099_001:0444c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲愍世間善作一切大利樂事。",
        "from": "T20n1099_001:0444c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今宣說此陀羅尼。",
        "from": "T20n1099_001:0444c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我先歸命過去未來現在三世善住諸佛菩薩。",
        "from": "T20n1099_001:0444c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼三世一切聲聞緣覺。",
        "from": "T20n1099_001:0444c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復歸命無量光如來應供正等正覺。",
        "from": "T20n1099_001:0444c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命慈氏等諸菩薩摩訶薩。",
        "from": "T20n1099_001:0444c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命大智舍利子等諸阿羅漢。",
        "from": "T20n1099_001:0444c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1099_001:0444c07_8",
        "context_with_next_sentence": true
    },
