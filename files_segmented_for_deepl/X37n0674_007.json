[
    {
        "source_sentence": "藥師燈燄",
        "from": "X37n0674_007:0769c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震旦桑門　淨挺　著",
        "from": "X37n0674_007:0769c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優婆塞　徐世淯",
        "from": "X37n0674_007:0769c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　陳祚昌　仝閱",
        "from": "X37n0674_007:0769c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X37n0674_007:0769c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥師是大乘經否。",
        "from": "X37n0674_007:0769c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答是也。",
        "from": "X37n0674_007:0769c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X37n0674_007:0769c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何遽知為大乘耶。",
        "from": "X37n0674_007:0769c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "X37n0674_007:0769c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "X37n0674_007:0769c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此義甚深。",
        "from": "X37n0674_007:0769c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除一生所係菩薩。",
        "from": "X37n0674_007:0769c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難可解了。",
        "from": "X37n0674_007:0769c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X37n0674_007:0769c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸行聲聞獨覺乘者。",
        "from": "X37n0674_007:0769c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以大乘而安立之。",
        "from": "X37n0674_007:0769c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是知其大乘也。",
        "from": "X37n0674_007:0769c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問。",
        "from": "X37n0674_007:0770a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既大乘經。",
        "from": "X37n0674_007:0770a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故說有為法。",
        "from": "X37n0674_007:0770a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "X37n0674_007:0770a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉足下步無非道場。",
        "from": "X37n0674_007:0770a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一色一香誠哉佛事。",
        "from": "X37n0674_007:0770a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治世語言資生產業皆與實相不相違背。",
        "from": "X37n0674_007:0770a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便善巧何不可耶。",
        "from": "X37n0674_007:0770a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一向擎拳竪掌。",
        "from": "X37n0674_007:0770a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指東話西。",
        "from": "X37n0674_007:0770a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他增上慢一流人全弄虗頭。",
        "from": "X37n0674_007:0770a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得謂得。",
        "from": "X37n0674_007:0770a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未證謂證。",
        "from": "X37n0674_007:0770a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撥無因果不畏罪福。",
        "from": "X37n0674_007:0770a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛也沒奈何他。",
        "from": "X37n0674_007:0770a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨末梢頭像法轉時。",
        "from": "X37n0674_007:0770a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越發信不及了。",
        "from": "X37n0674_007:0770a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法住世一千年。",
        "from": "X37n0674_007:0770a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像法住世一千年。",
        "from": "X37n0674_007:0770a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔廟堅固。",
        "from": "X37n0674_007:0770a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬬爭堅固。",
        "from": "X37n0674_007:0770a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今正此時。",
        "from": "X37n0674_007:0770a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業障所纏。",
        "from": "X37n0674_007:0770a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塞礙道眼。",
        "from": "X37n0674_007:0770a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何奈何。",
        "from": "X37n0674_007:0770a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄伽梵涅槃門有一個方便法兒救度。",
        "from": "X37n0674_007:0770a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等尋常大言不慚說。",
        "from": "X37n0674_007:0770a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛一聲漱口三月。",
        "from": "X37n0674_007:0770a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方淨土我不願聞。",
        "from": "X37n0674_007:0770a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今不要你生西方。",
        "from": "X37n0674_007:0770a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即生東方也。",
        "from": "X37n0674_007:0770a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罷東方世界號淨琉璃。",
        "from": "X37n0674_007:0770a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如西方等無差別。",
        "from": "X37n0674_007:0770a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只是一件。",
        "from": "X37n0674_007:0770a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方極樂即無退轉。",
        "from": "X37n0674_007:0770a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方世界。",
        "from": "X37n0674_007:0770a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可生天為轉輪聖王。",
        "from": "X37n0674_007:0770a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生人中作國王大臣長者居士。",
        "from": "X37n0674_007:0770a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多饒財寶。",
        "from": "X37n0674_007:0770a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富有倉廩。",
        "from": "X37n0674_007:0770a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威德具足。",
        "from": "X37n0674_007:0770a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形相端好。",
        "from": "X37n0674_007:0770a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝意云何。",
        "from": "X37n0674_007:0770a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生願樂否。",
        "from": "X37n0674_007:0770a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求官位耶。",
        "from": "X37n0674_007:0770a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求富饒耶。",
        "from": "X37n0674_007:0770a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求男女耶。",
        "from": "X37n0674_007:0770a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求長壽耶。",
        "from": "X37n0674_007:0770a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饒你修行不修行說著。",
        "from": "X37n0674_007:0770a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食衣服醫藥臥具所受用物。",
        "from": "X37n0674_007:0770a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都無盡期。",
        "from": "X37n0674_007:0770a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十箇有五雙。",
        "from": "X37n0674_007:0770a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "割捨不得。",
        "from": "X37n0674_007:0770a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有奇特。",
        "from": "X37n0674_007:0770a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不但作諸事業隨意所趨。",
        "from": "X37n0674_007:0770a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至三十二相八十隨形。",
        "from": "X37n0674_007:0770a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直至菩提。",
        "from": "X37n0674_007:0770a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與他釋迦老子無二無別。",
        "from": "X37n0674_007:0770a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你還肯好樂麼。",
        "from": "X37n0674_007:0770a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是此便是彼。",
        "from": "X37n0674_007:0770a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不上南便落北。",
        "from": "X37n0674_007:0770a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋常說個地獄餓鬼畜生。",
        "from": "X37n0674_007:0770a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝都不信。",
        "from": "X37n0674_007:0770a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他琰魔法王在汝面前。",
        "from": "X37n0674_007:0770a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有俱生神具說罪福。",
        "from": "X37n0674_007:0770a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你增上慢人還免得麼。",
        "from": "X37n0674_007:0770a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一般在人道中王法所加。",
        "from": "X37n0674_007:0770a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛戮係閉。",
        "from": "X37n0674_007:0770a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災難凌逼。",
        "from": "X37n0674_007:0770a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水溺火焚。",
        "from": "X37n0674_007:0770a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種惡獸所噉。",
        "from": "X37n0674_007:0770a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至攣躄背僂。",
        "from": "X37n0674_007:0770a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白癩顛狂。",
        "from": "X37n0674_007:0770a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生居下賤。",
        "from": "X37n0674_007:0770a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人奴僕。",
        "from": "X37n0674_007:0770a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝還甘麼。",
        "from": "X37n0674_007:0770a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎狼異類。",
        "from": "X37n0674_007:0770b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蚰蜒小物。",
        "from": "X37n0674_007:0770b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且不足言。",
        "from": "X37n0674_007:0770b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即如牛馬駝驢。",
        "from": "X37n0674_007:0770b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "負重而行。",
        "from": "X37n0674_007:0770b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無罪無辜。",
        "from": "X37n0674_007:0770b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受人鞭撻。",
        "from": "X37n0674_007:0770b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是何道理。",
        "from": "X37n0674_007:0770b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衛太子。",
        "from": "X37n0674_007:0770b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許皇后。",
        "from": "X37n0674_007:0770b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳楚淮南。",
        "from": "X37n0674_007:0770b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並以呪詛死者千屬。",
        "from": "X37n0674_007:0770b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有因果耶。",
        "from": "X37n0674_007:0770b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無因果耶。",
        "from": "X37n0674_007:0770b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月薄融。",
        "from": "X37n0674_007:0770b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彗孛飛流。",
        "from": "X37n0674_007:0770b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢饉頻仍。",
        "from": "X37n0674_007:0770b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戰爭不息。",
        "from": "X37n0674_007:0770b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民生其間率多中夭。",
        "from": "X37n0674_007:0770b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄三塗此其較著者也。",
        "from": "X37n0674_007:0770b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大乘經說六度法。",
        "from": "X37n0674_007:0770b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總為菩薩因緣。",
        "from": "X37n0674_007:0770b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸汝布施。",
        "from": "X37n0674_007:0770b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝又不肯。",
        "from": "X37n0674_007:0770b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸汝持戒。",
        "from": "X37n0674_007:0770b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝又不能。",
        "from": "X37n0674_007:0770b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚至積集資財。",
        "from": "X37n0674_007:0770b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞軌則。",
        "from": "X37n0674_007:0770b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一味我慢貢高耑與忍辱相反。",
        "from": "X37n0674_007:0770b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭棄多聞與精進反。",
        "from": "X37n0674_007:0770b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀敗正見與禪定反。",
        "from": "X37n0674_007:0770b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于佛所說契經深意不能解了與智慧反。",
        "from": "X37n0674_007:0770b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聲聞緣覺諸小乘法是束縛汝不定的。",
        "from": "X37n0674_007:0770b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這六度萬行明明大路在汝目前。",
        "from": "X37n0674_007:0770b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝又當面錯過。",
        "from": "X37n0674_007:0770b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一味指空望空胡喝亂道。",
        "from": "X37n0674_007:0770b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不敬天地。",
        "from": "X37n0674_007:0770b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信鬼神。",
        "from": "X37n0674_007:0770b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可憐生可憐生。",
        "from": "X37n0674_007:0770b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一回來失却人身。",
        "from": "X37n0674_007:0770b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真正救汝不得也。",
        "from": "X37n0674_007:0770b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泥裏喫跌泥裏洗。",
        "from": "X37n0674_007:0770b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平常教汝參禪念佛。",
        "from": "X37n0674_007:0770b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日為期。",
        "from": "X37n0674_007:0770b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日不了再是七日。",
        "from": "X37n0674_007:0770b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如今業障所纏卒難消遣。",
        "from": "X37n0674_007:0770b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日一夜乃至七日七夜。",
        "from": "X37n0674_007:0770b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮拜行道。",
        "from": "X37n0674_007:0770b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念不可放鬆。",
        "from": "X37n0674_007:0770b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這八關齋戒。",
        "from": "X37n0674_007:0770b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "關閉一切諸惡。",
        "from": "X37n0674_007:0770b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長一切諸善。",
        "from": "X37n0674_007:0770b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西域有人得生天果。",
        "from": "X37n0674_007:0770b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目連尊者曾為頻婆娑羅王攝授此戒。",
        "from": "X37n0674_007:0770b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此土任彥升沈休文諸大英俊。",
        "from": "X37n0674_007:0770b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是為入道之基。",
        "from": "X37n0674_007:0770b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白居易問鳥窠。",
        "from": "X37n0674_007:0770b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窠曰。",
        "from": "X37n0674_007:0770b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾善奉行諸惡莫作。",
        "from": "X37n0674_007:0770b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你晝夜六時在藥師壇中。",
        "from": "X37n0674_007:0770b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所為何事。",
        "from": "X37n0674_007:0770b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然燈續明。",
        "from": "X37n0674_007:0770b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放生修福。",
        "from": "X37n0674_007:0770b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟圖度著可意事。",
        "from": "X37n0674_007:0770b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭離著不可意事。",
        "from": "X37n0674_007:0770b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這圖度可意的便是好善一心。",
        "from": "X37n0674_007:0770b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭離不可意的便是惡不善一心。",
        "from": "X37n0674_007:0770b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生慇重心。",
        "from": "X37n0674_007:0770b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生恭敬心。",
        "from": "X37n0674_007:0770b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無垢濁心。",
        "from": "X37n0674_007:0770b23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無怒害心。",
        "from": "X37n0674_007:0770b23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日一心。",
        "from": "X37n0674_007:0770b24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至四十九日一心。",
        "from": "X37n0674_007:0770b24_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這四十九日中光明不絕。",
        "from": "X37n0674_007:0770b24_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便是一盞淨琉璃綿亘十方。",
        "from": "X37n0674_007:0770c01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外瑩徹了也。",
        "from": "X37n0674_007:0770c01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我如今還說一箇譬喻。",
        "from": "X37n0674_007:0770c02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "這琉璃瓶本是光明。",
        "from": "X37n0674_007:0770c02_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外十方無所不照。",
        "from": "X37n0674_007:0770c02_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只因黑夜裏。",
        "from": "X37n0674_007:0770c03_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失却一隻眼睛。",
        "from": "X37n0674_007:0770c03_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無端借些膏火。",
        "from": "X37n0674_007:0770c03_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以火生光。",
        "from": "X37n0674_007:0770c04_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以膏續火。",
        "from": "X37n0674_007:0770c04_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一息不來便暗昏昏。",
        "from": "X37n0674_007:0770c04_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一齊不見了。",
        "from": "X37n0674_007:0770c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸人要知。",
        "from": "X37n0674_007:0770c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你四十九日內還有一息不來的時節麼。",
        "from": "X37n0674_007:0770c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直須念念是處處是時時是。",
        "from": "X37n0674_007:0770c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如膏續火。",
        "from": "X37n0674_007:0770c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如火生光。",
        "from": "X37n0674_007:0770c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨琉璃打成一片。",
        "from": "X37n0674_007:0770c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "個裏却揀擇不得一毫頭。",
        "from": "X37n0674_007:0770c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夾帶不得一些子的。",
        "from": "X37n0674_007:0770c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如琉璃。",
        "from": "X37n0674_007:0770c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有揀擇便有照有不照了。",
        "from": "X37n0674_007:0770c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有夾帶便有亮有不亮了。",
        "from": "X37n0674_007:0770c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以有所得心修無所得法。",
        "from": "X37n0674_007:0770c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還以有所得法證無所得心。",
        "from": "X37n0674_007:0770c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八大菩薩乘空而來示其道路。",
        "from": "X37n0674_007:0770c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日光遍照。",
        "from": "X37n0674_007:0770c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月光遍照。",
        "from": "X37n0674_007:0770c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣嚴城畔圓陀陀活潑潑。",
        "from": "X37n0674_007:0770c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古鏡流輝東方西方一齊涉入。",
        "from": "X37n0674_007:0770c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所謂燄網莊嚴也。",
        "from": "X37n0674_007:0770c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實際理地不受一塵。",
        "from": "X37n0674_007:0770c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛事門中不捨一法。",
        "from": "X37n0674_007:0770c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "你增上慢人慣開大口。",
        "from": "X37n0674_007:0770c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撥無因果惑亂人。",
        "from": "X37n0674_007:0770c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟飯是米做。",
        "from": "X37n0674_007:0770c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塼是土做。",
        "from": "X37n0674_007:0770c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師姑是女人做。",
        "from": "X37n0674_007:0770c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因地而倒。",
        "from": "X37n0674_007:0770c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因地而起。",
        "from": "X37n0674_007:0770c15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭頭法法了了明明。",
        "from": "X37n0674_007:0770c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果歷然。",
        "from": "X37n0674_007:0770c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理事不二。",
        "from": "X37n0674_007:0770c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到這裏還信得及麼。",
        "from": "X37n0674_007:0770c16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "也不要你參禪。",
        "from": "X37n0674_007:0770c17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "也不要你念佛。",
        "from": "X37n0674_007:0770c17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只四十九日禮拜稱誦這藥師經。",
        "from": "X37n0674_007:0770c17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意業自然清淨。",
        "from": "X37n0674_007:0770c18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多生罪障。",
        "from": "X37n0674_007:0770c18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累劫冤牽。",
        "from": "X37n0674_007:0770c19_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時氷釋了也。",
        "from": "X37n0674_007:0770c19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟與不悟。",
        "from": "X37n0674_007:0770c19_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了與不了。",
        "from": "X37n0674_007:0770c19_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且漫商量。",
        "from": "X37n0674_007:0770c20_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洒洒落落。",
        "from": "X37n0674_007:0770c20_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "做一個光明潔淨有道的人。",
        "from": "X37n0674_007:0770c20_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多少受用三塗地獄自然羈絆汝不著了。",
        "from": "X37n0674_007:0770c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛昔本願與汝同證菩提斷不欺汝。",
        "from": "X37n0674_007:0770c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復四大天王十二藥叉與一切天龍鬼神共相擁護。",
        "from": "X37n0674_007:0770c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不快哉豈不快哉。",
        "from": "X37n0674_007:0770c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切不修行人諸惡鬼神奪其精氣。",
        "from": "X37n0674_007:0770c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切修行人天龍神等所共護持。",
        "from": "X37n0674_007:0770c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福善禍淫斯理不爽。",
        "from": "X37n0674_007:0771a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天神人鬼儒典有之。",
        "from": "X37n0674_007:0771a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益知此大乘經文不可謗毀矣。",
        "from": "X37n0674_007:0771a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還有數問。",
        "from": "X37n0674_007:0771a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鴛崛托鉢。",
        "from": "X37n0674_007:0771a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一女人。",
        "from": "X37n0674_007:0771a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨當產時受於極苦。",
        "from": "X37n0674_007:0771a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為甚不持此經。",
        "from": "X37n0674_007:0771a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時轉女成男去。",
        "from": "X37n0674_007:0771a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曇照禪師命終乃云。",
        "from": "X37n0674_007:0771a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻羅王來拿我也。",
        "from": "X37n0674_007:0771a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不是彼王推問麼。",
        "from": "X37n0674_007:0771a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子受戮。",
        "from": "X37n0674_007:0771a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二祖往鄴都橫被王法。",
        "from": "X37n0674_007:0771a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當亦名為抂死麼。",
        "from": "X37n0674_007:0771a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何如何。",
        "from": "X37n0674_007:0771a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玄沙道。",
        "from": "X37n0674_007:0771a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盲聾喑啞三種病人接伊不得。",
        "from": "X37n0674_007:0771a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果是障緣深重耶。",
        "from": "X37n0674_007:0771a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溈山水牯牛。",
        "from": "X37n0674_007:0771a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南泉水牯牛。",
        "from": "X37n0674_007:0771a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帶角披毛。",
        "from": "X37n0674_007:0771a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨路而行。",
        "from": "X37n0674_007:0771a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪過不少。",
        "from": "X37n0674_007:0771a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬祖不安。",
        "from": "X37n0674_007:0771a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "院主入問。",
        "from": "X37n0674_007:0771a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日面佛。",
        "from": "X37n0674_007:0771a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月面佛。",
        "from": "X37n0674_007:0771a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不是日光遍照月光遍照麼。",
        "from": "X37n0674_007:0771a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸仁者。",
        "from": "X37n0674_007:0771a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除却善男子善女人。",
        "from": "X37n0674_007:0771a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他鄔波索迦鄔波斯迦。",
        "from": "X37n0674_007:0771a10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更立一名。",
        "from": "X37n0674_007:0771a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除却疑神樂神八部等神。",
        "from": "X37n0674_007:0771a11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他徤達縛阿素洛揭路荼緊捺洛等。",
        "from": "X37n0674_007:0771a11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別安一義何如。",
        "from": "X37n0674_007:0771a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速道速道。",
        "from": "X37n0674_007:0771a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥師燈燄(終)",
        "from": "X37n0674_007:0771a15_0",
        "context_with_next_sentence": false
    }
]