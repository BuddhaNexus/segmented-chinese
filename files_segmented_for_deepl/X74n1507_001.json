[
    {
        "source_sentence": "錢唐靈芝大智律師禮讚文(并序)",
        "from": "X74n1507_001:1083a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門人巖香練若　則安　述",
        "from": "X74n1507_001:1083a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先稟大智律師順寂之後。",
        "from": "X74n1507_001:1083a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有同學以諱日贊文見囑。",
        "from": "X74n1507_001:1083a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "累年未暇。",
        "from": "X74n1507_001:1083a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽夜夢入一室中。",
        "from": "X74n1507_001:1083a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會數道人講及先師生平懿業。",
        "from": "X74n1507_001:1083a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解行絕倫。",
        "from": "X74n1507_001:1083a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徐有語曰。",
        "from": "X74n1507_001:1083a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扶顛持危。",
        "from": "X74n1507_001:1083a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂世立教。",
        "from": "X74n1507_001:1083a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功不在諸祖下。",
        "from": "X74n1507_001:1083a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子之不為贊文何也。",
        "from": "X74n1507_001:1083a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既覺。",
        "from": "X74n1507_001:1083a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶得數聯。",
        "from": "X74n1507_001:1083a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緝綴成章。",
        "from": "X74n1507_001:1083a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶同俚詠。",
        "from": "X74n1507_001:1083a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然慎終追遠。",
        "from": "X74n1507_001:1083a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在志不在文。",
        "from": "X74n1507_001:1083a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固無愧哉。",
        "from": "X74n1507_001:1083a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(初入道場。",
        "from": "X74n1507_001:1083a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三禮已。",
        "from": "X74n1507_001:1083a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互跪燒香散華。",
        "from": "X74n1507_001:1083a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執手爐唱云)。",
        "from": "X74n1507_001:1083a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首靈芝教主大智律師。",
        "from": "X74n1507_001:1083a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧性夙明。",
        "from": "X74n1507_001:1083a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學聲遠著。",
        "from": "X74n1507_001:1083a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玅賾潛通於佛智。",
        "from": "X74n1507_001:1083a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清修允恊於聖儀。",
        "from": "X74n1507_001:1083a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "式遵一字之規。",
        "from": "X74n1507_001:1083a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "克荷百金之寄。",
        "from": "X74n1507_001:1083a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗承法密。",
        "from": "X74n1507_001:1083a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儲貳終南。",
        "from": "X74n1507_001:1083a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "築兩壇而亘古亘今。",
        "from": "X74n1507_001:1083a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰三記而變風變雅。",
        "from": "X74n1507_001:1083a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發揮極唱。",
        "from": "X74n1507_001:1083a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱天辯以談常。",
        "from": "X74n1507_001:1083a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪贊上乘。",
        "from": "X74n1507_001:1083a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濬祖源而會實。",
        "from": "X74n1507_001:1083a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰以剡浮化滿。",
        "from": "X74n1507_001:1083a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋印壞以東辭。",
        "from": "X74n1507_001:1083a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安養功圓。",
        "from": "X74n1507_001:1083a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽文成而西邁。",
        "from": "X74n1507_001:1083a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則莫秋初啟。",
        "from": "X74n1507_001:1083a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諱日斯臨。",
        "from": "X74n1507_001:1083a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是輙吐蕪言載揚茂績。",
        "from": "X74n1507_001:1083a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒身如在。",
        "from": "X74n1507_001:1083a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審雍肅以薦羞。",
        "from": "X74n1507_001:1083a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法語難親。",
        "from": "X74n1507_001:1083a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍悲號而泣血。",
        "from": "X74n1507_001:1083a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰冀曲回慈鑒。",
        "from": "X74n1507_001:1083a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊享哀誠。",
        "from": "X74n1507_001:1083a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯令負笈之儔。",
        "from": "X74n1507_001:1083a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡預分燈之列。",
        "from": "X74n1507_001:1083a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(唱已。",
        "from": "X74n1507_001:1083a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一拜起。",
        "from": "X74n1507_001:1083a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復跪執爐至請)。",
        "from": "X74n1507_001:1083a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請靈芝教主大智律師。",
        "from": "X74n1507_001:1083a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願降臨道場。",
        "from": "X74n1507_001:1083b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受我供養。",
        "from": "X74n1507_001:1083b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(三請。",
        "from": "X74n1507_001:1083b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一禮起。",
        "from": "X74n1507_001:1083b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎云)。",
        "from": "X74n1507_001:1083b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　端嚴具足　　相如其心　　耿介孤高　心如其相　　謂方則圓　　若拘而放　不持不犯　　人天歸向(歎已宣疏。",
        "from": "X74n1507_001:1083b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或別述意。",
        "from": "X74n1507_001:1083b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨時自裁。",
        "from": "X74n1507_001:1083b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後禮讚。",
        "from": "X74n1507_001:1083b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱云)。",
        "from": "X74n1507_001:1083b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮大中名剎棄家入道時身靈芝尊者。",
        "from": "X74n1507_001:1083b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愛網緣疎思擺脫　　僧園路熟認迂回　比方隣子警雙親　　指顧寺神驚廣眾　總角筆端先世習　　成童經業試場魁　黌堂染翰氣食牛　　宗裔家師當反敬故我一心歸命頂禮。",
        "from": "X74n1507_001:1083b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆倣此)。",
        "from": "X74n1507_001:1083b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮古佛蹊徑入鄽乞食時身。",
        "from": "X74n1507_001:1083b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一鉢當衢心喻月　　雙環搖處志凌雲　寅緣午飯過朱門　　遠離邪求全正命　斷取不殊香積供　　獻來差似牧牛糜　精新分減及蟲魚　　慚愧等慈均法施一心頂禮經律兼授懸河樂說時身。",
        "from": "X74n1507_001:1083b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　夙契鷲峰親囑累　　天教宗匠勸回心　風生象扇栢煙浮　　雲擁猊臺四華雨　拍肩部主恢真域　　擊節洪遵賾玅經　并汾律虎爪牙成　　禹穴義龍嗟伏鹿一心頂禮紹明行事掩關撰記時身。",
        "from": "X74n1507_001:1083b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　大法優柔真自得　　斯文流演在揮毫　維持眾網整頹綱　　竝駕五乘回正軌　三絕韋編同索隱　　四求墨印類鉤深　團蒲小睡夢西明　　六十餘家成蠧簡一心頂禮水雲深處擊蒙增受時身。",
        "from": "X74n1507_001:1083b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　遐慕聖蹤京兆日　　高遵玄範蔡江時　重增上品趣泥洹　　圓具三因期解脫　嶽瀆崩騰來梵侶　　虗空銷殞動天魔　聖胎法乳藉斯人　　粉骨碎軀難報德一心頂禮碧沼蘭若潛真解疏時身。",
        "from": "X74n1507_001:1083c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　拂衣漸水城邊寺　　躡屐青巒隴上來　片石長松愜素懷　　曉猿夜鶴窺深定　濾泉晚沼瑠璃碧　　開卷秋堂薝蔔馨　太一遺文太古風　　半千年後知音遇一心頂禮台山鄞水築壇授戒時身。",
        "from": "X74n1507_001:1083c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　丹青五級巾山下　　突兀三層貿嶺中　珠顆圓明粲日星　　天儀森著懸衡鑒　聖模應法如關輔　　寶勢侵雲象玅高　光顯毗尼再有人　　遙空想見賓頭禮一心頂禮盟誠利物一華不動時身。",
        "from": "X74n1507_001:1083c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　坐徧名藍求寂靜　　湖山勝剎樂棲遲　危脆深觀燄幻身　　稽留任笑匏瓜跡　百年諍地辭天竺　　一夢塵區謝菊坡　大旱潮音講大雲　　廣筵未散番盆雨一心頂禮秋高蘭室加趺示滅時身。",
        "from": "X74n1507_001:1083c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　北首曲肱瞻落日　　西馳返照識歸程　瞿然而起即加趺　　嗑爾云亡徐瞑目　了了神遊端入定　　翹翹首舉儼如生　里巷居人寂未知　　但聞天樂鳴空界一心頂禮芝園福地塔婆窀窆時身。",
        "from": "X74n1507_001:1083c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　蓮社沍寒襄事日　　杉亭焦卷傲霜枝　四簷霧瀉燭還明　　萬竅風號香不散　大水結氷如寶砌　　長空攪雪似華飛　冠葢旌幢訃鶴林　　名題墨玅光遺烈一心頂禮窣堵顯瑞焚經不壞時身。",
        "from": "X74n1507_001:1084a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　定持梵相經時久　　塔鎮芝園慕永存　寇火洞然靡子遺　　堅幢兀爾無纖變　龍天翊衛彰靈瑞　　貴庶傾瞻歎異逢　沒後留形福有緣　　生前濟物何當計一心頂禮紫宸懷道追封旌表時身。",
        "from": "X74n1507_001:1084a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　緣謝政和當六稔　　紹興旌顯十年秋　後昆安得偃慈風　　耆艾猶能談化迹　數紀寢聞追諡禮　　九重澤降錫鴻名　大智汪洋擬佛同　　戒光赫奕周沙界至心懺悔　制聽遮性三千戒　　作說威儀八萬條　但縱癡頑不節心　　寧思肅慎深防意　妄隨相有空難見　　業會因緣果不差　恭對慈光悉懺摩　　庶同赫日銷霜雪懺悔已。",
        "from": "X74n1507_001:1084a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命頂禮。",
        "from": "X74n1507_001:1084a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心發願",
        "from": "X74n1507_001:1084b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此界他方無量劫　　人間天上與師俱　智用能乘般若舟　　身通即到菩提岸　確爾圓修三聚戒　　毅然不退四弘心　去來今世眾怨親　　盡化同歸安養土發願已。",
        "from": "X74n1507_001:1084b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命頂禮。",
        "from": "X74n1507_001:1084b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右巖香所製禮讚。",
        "from": "X74n1507_001:1084b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在於錫號之前。",
        "from": "X74n1507_001:1084b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無大智之稱。",
        "from": "X74n1507_001:1084b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜特添入。",
        "from": "X74n1507_001:1084b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復易天宮以為靈芝。",
        "from": "X74n1507_001:1084b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貴使通知其塔。",
        "from": "X74n1507_001:1084b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存封諡之美。",
        "from": "X74n1507_001:1084b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廼最後徵異之觀。",
        "from": "X74n1507_001:1084b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨闕贊辭。",
        "from": "X74n1507_001:1084b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂加二章綴之於後。",
        "from": "X74n1507_001:1084b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶得始末敘事備焉。",
        "from": "X74n1507_001:1084b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其間語有未安者。",
        "from": "X74n1507_001:1084b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輙更數字。",
        "from": "X74n1507_001:1084b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無傷其理。",
        "from": "X74n1507_001:1084b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞覩大智律師就諸本禮文頗有加改。",
        "from": "X74n1507_001:1084b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢遵斯例。",
        "from": "X74n1507_001:1084b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命刻諸版。",
        "from": "X74n1507_001:1084b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施及同宗。",
        "from": "X74n1507_001:1084b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾臨諱日託此以興追遠之禮也。",
        "from": "X74n1507_001:1084b14_6",
        "context_with_next_sentence": true
    },
