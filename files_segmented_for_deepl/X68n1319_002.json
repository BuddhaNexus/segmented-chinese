[
    {
        "source_sentence": "御製序",
        "from": "X68n1319_002:0526b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古人遇時節因緣。",
        "from": "X68n1319_002:0526b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每云言下大悟。",
        "from": "X68n1319_002:0526b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫言下大悟。",
        "from": "X68n1319_002:0526b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟不在言也。",
        "from": "X68n1319_002:0526b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韓廬逐塊。",
        "from": "X68n1319_002:0526b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃於言中求悟。",
        "from": "X68n1319_002:0526b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢到驢年。",
        "from": "X68n1319_002:0526b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為執指求月者。",
        "from": "X68n1319_002:0526b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃梅．曹溪密室夜分傳衣授受。",
        "from": "X68n1319_002:0526b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究何曾道一字耶。",
        "from": "X68n1319_002:0526b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迨後黃梅送曹溪至九江驛邊。",
        "from": "X68n1319_002:0526b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩人共語。",
        "from": "X68n1319_002:0526b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曹溪云。",
        "from": "X68n1319_002:0526b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只合自性自度。",
        "from": "X68n1319_002:0526b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃梅云。",
        "from": "X68n1319_002:0526b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是。",
        "from": "X68n1319_002:0526b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是。",
        "from": "X68n1319_002:0526b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫既自性自度。",
        "from": "X68n1319_002:0526b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則黃梅何授。",
        "from": "X68n1319_002:0526b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曹溪何受乎。",
        "from": "X68n1319_002:0526b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然。",
        "from": "X68n1319_002:0526b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此正黃梅所授。",
        "from": "X68n1319_002:0526b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曹溪所受也。",
        "from": "X68n1319_002:0526b10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉之於曹溪。",
        "from": "X68n1319_002:0526b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更可分明舉似天下後世。",
        "from": "X68n1319_002:0526b11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫永嘉參承。",
        "from": "X68n1319_002:0526b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止一宿耳。",
        "from": "X68n1319_002:0526b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故謂之一宿覺。",
        "from": "X68n1319_002:0526b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今觀其問答語。",
        "from": "X68n1319_002:0526b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉全是逆水之機。",
        "from": "X68n1319_002:0526b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毫無順水之意。",
        "from": "X68n1319_002:0526b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則曹溪何授而永嘉何受乎。",
        "from": "X68n1319_002:0526b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知永嘉正從此得曹溪乳。",
        "from": "X68n1319_002:0526b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可誣也。",
        "from": "X68n1319_002:0526b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋使有一實法與人。",
        "from": "X68n1319_002:0526b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而曰法乳。",
        "from": "X68n1319_002:0526b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直同馬生馬。",
        "from": "X68n1319_002:0526b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驢生驢耳。",
        "from": "X68n1319_002:0526b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此。",
        "from": "X68n1319_002:0526b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔外別生魔外。",
        "from": "X68n1319_002:0526b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如久竹生青寧。",
        "from": "X68n1319_002:0526b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青寧生程。",
        "from": "X68n1319_002:0526b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚安得稱慧命哉。",
        "from": "X68n1319_002:0526b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉言句。",
        "from": "X68n1319_002:0526b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西竺推為東土大乘論。",
        "from": "X68n1319_002:0526b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕披覧之。",
        "from": "X68n1319_002:0526b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉其修悟雙圓。",
        "from": "X68n1319_002:0526b18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘戒兼妙。",
        "from": "X68n1319_002:0526b18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自淺之深。",
        "from": "X68n1319_002:0526b18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淺深一致。",
        "from": "X68n1319_002:0526b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實惟宗徒指南。",
        "from": "X68n1319_002:0526b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰加刪訂。",
        "from": "X68n1319_002:0526b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刊示十方叢林焉。",
        "from": "X68n1319_002:0526b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍正十一年癸丑四月望日",
        "from": "X68n1319_002:0526b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御選洞明妙智永嘉覺禪師語錄",
        "from": "X68n1319_002:0526c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師。",
        "from": "X68n1319_002:0526c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永嘉人也。",
        "from": "X68n1319_002:0526c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "姓戴氏。",
        "from": "X68n1319_002:0526c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丱歲出家。",
        "from": "X68n1319_002:0526c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧探三藏。",
        "from": "X68n1319_002:0526c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精天台止觀圓妙法門。",
        "from": "X68n1319_002:0526c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於四威儀中。",
        "from": "X68n1319_002:0526c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常冥禪觀。",
        "from": "X68n1319_002:0526c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後因左谿朗禪師激勵。",
        "from": "X68n1319_002:0526c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與東陽策禪師同詣曹溪。",
        "from": "X68n1319_002:0526c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　初到。",
        "from": "X68n1319_002:0526c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "振錫攜瓶。",
        "from": "X68n1319_002:0526c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繞祖三帀。",
        "from": "X68n1319_002:0526c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖曰。",
        "from": "X68n1319_002:0526c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫沙門者。",
        "from": "X68n1319_002:0526c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具三千威儀。",
        "from": "X68n1319_002:0526c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬細行。",
        "from": "X68n1319_002:0526c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大德自何方而來。",
        "from": "X68n1319_002:0526c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生大我慢。",
        "from": "X68n1319_002:0526c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　師曰。",
        "from": "X68n1319_002:0526c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死事大。",
        "from": "X68n1319_002:0526c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常迅速。",
        "from": "X68n1319_002:0526c09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　祖曰。",
        "from": "X68n1319_002:0526c09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以體取無生。",
        "from": "X68n1319_002:0526c10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了無速乎。",
        "from": "X68n1319_002:0526c10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　曰。",
        "from": "X68n1319_002:0526c10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體即無生。",
        "from": "X68n1319_002:0526c10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了本無速。",
        "from": "X68n1319_002:0526c10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　祖云。",
        "from": "X68n1319_002:0526c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是。",
        "from": "X68n1319_002:0526c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是。",
        "from": "X68n1319_002:0526c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於時。",
        "from": "X68n1319_002:0526c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾無不愕然。",
        "from": "X68n1319_002:0526c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師方具威儀參禮。",
        "from": "X68n1319_002:0526c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾告辭。",
        "from": "X68n1319_002:0526c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖曰。",
        "from": "X68n1319_002:0526c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "返太速乎。",
        "from": "X68n1319_002:0526c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　師曰。",
        "from": "X68n1319_002:0526c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本自非動。",
        "from": "X68n1319_002:0526c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有速耶。",
        "from": "X68n1319_002:0526c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　祖曰。",
        "from": "X68n1319_002:0526c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰知非動。",
        "from": "X68n1319_002:0526c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　曰。",
        "from": "X68n1319_002:0526c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁者自生分別。",
        "from": "X68n1319_002:0526c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　祖曰。",
        "from": "X68n1319_002:0526c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝甚得無生之意。",
        "from": "X68n1319_002:0526c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　曰。",
        "from": "X68n1319_002:0526c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生豈有意耶。",
        "from": "X68n1319_002:0526c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　祖曰。",
        "from": "X68n1319_002:0526c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無意誰當分別。",
        "from": "X68n1319_002:0526c14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　曰。",
        "from": "X68n1319_002:0526c14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分別亦非意。",
        "from": "X68n1319_002:0526c14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　祖歎曰。",
        "from": "X68n1319_002:0526c15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉。",
        "from": "X68n1319_002:0526c15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉。",
        "from": "X68n1319_002:0526c15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少留一宿。",
        "from": "X68n1319_002:0526c15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時謂一宿覺矣。",
        "from": "X68n1319_002:0526c15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　迴住溫江。",
        "from": "X68n1319_002:0526c16_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者輻輳。",
        "from": "X68n1319_002:0526c16_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號真覺大師。",
        "from": "X68n1319_002:0526c16_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著禪宗悟修圓",
        "from": "X68n1319_002:0526c16_32",
        "context_with_next_sentence": false
    }
]