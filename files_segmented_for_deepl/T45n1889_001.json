[
    {
        "source_sentence": "海印三昧論一卷(并序)",
        "from": "T45n1889_001:0773c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依大方廣佛華嚴經",
        "from": "T45n1889_001:0773c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明皛所述",
        "from": "T45n1889_001:0773c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夫大道無邊非隘行之能尋。",
        "from": "T45n1889_001:0773c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至理深玄非淺智之所識。",
        "from": "T45n1889_001:0773c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如以局情入道。",
        "from": "T45n1889_001:0773c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道非局入。",
        "from": "T45n1889_001:0773c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執教求理。",
        "from": "T45n1889_001:0773c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理非執求。",
        "from": "T45n1889_001:0773c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要以無方大行始可穪道。",
        "from": "T45n1889_001:0773c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孱空圓智逈會理矣。",
        "from": "T45n1889_001:0773c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故請將來君子同懷寄筌之意。",
        "from": "T45n1889_001:0773c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸命盡十方　　法界中三寶",
        "from": "T45n1889_001:0773c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我欲報佛恩　　略演契經義",
        "from": "T45n1889_001:0773c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　普令眾生類　　得大涅槃樂",
        "from": "T45n1889_001:0774a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願慈加護念　　滿我本誓願",
        "from": "T45n1889_001:0774a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T45n1889_001:0774a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大三昧。",
        "from": "T45n1889_001:0774a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰海印。",
        "from": "T45n1889_001:0774a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速令行者至不退地。",
        "from": "T45n1889_001:0774a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用小方便獲大利益。",
        "from": "T45n1889_001:0774a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印之內要義偈頌名陀羅尼。",
        "from": "T45n1889_001:0774a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持一切契經要義。",
        "from": "T45n1889_001:0774a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普含一切諸佛功德。",
        "from": "T45n1889_001:0774a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然陀羅尼略有二種。",
        "from": "T45n1889_001:0774a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法。",
        "from": "T45n1889_001:0774a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二義。",
        "from": "T45n1889_001:0774a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法中有三。",
        "from": "T45n1889_001:0774a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂體智用。",
        "from": "T45n1889_001:0774a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言體者。",
        "from": "T45n1889_001:0774a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂諸眾生根本一心。",
        "from": "T45n1889_001:0774a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心本來自性清淨。",
        "from": "T45n1889_001:0774a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不增不減。",
        "from": "T45n1889_001:0774a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生不滅。",
        "from": "T45n1889_001:0774a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曠大無邊猶如虛空。",
        "from": "T45n1889_001:0774a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持一切世出世法。",
        "from": "T45n1889_001:0774a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不攝故。",
        "from": "T45n1889_001:0774a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言智者。",
        "from": "T45n1889_001:0774a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂如來地理量二智。",
        "from": "T45n1889_001:0774a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無理不照無事不達。",
        "from": "T45n1889_001:0774a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持一切無邊功德。",
        "from": "T45n1889_001:0774a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不攝故。",
        "from": "T45n1889_001:0774a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言用者。",
        "from": "T45n1889_001:0774a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂如來地應化二身。",
        "from": "T45n1889_001:0774a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普應法界教化眾生。",
        "from": "T45n1889_001:0774a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際化用無竭。",
        "from": "T45n1889_001:0774a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持一切世出世間所有諸法。",
        "from": "T45n1889_001:0774a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不攝故。",
        "from": "T45n1889_001:0774a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言義者。",
        "from": "T45n1889_001:0774a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂摩訶衍圓教所顯廣大妙義。",
        "from": "T45n1889_001:0774a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持十方三世諸佛祕密法藏。",
        "from": "T45n1889_001:0774a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不攝故。",
        "from": "T45n1889_001:0774a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是二種陀羅尼門各攝無量塵沙法門。",
        "from": "T45n1889_001:0774a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相容無礙互相攝入。",
        "from": "T45n1889_001:0774a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨入一門無所不通。",
        "from": "T45n1889_001:0774a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了達一切塵沙法門。",
        "from": "T45n1889_001:0774a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入佛境界得無所畏。",
        "from": "T45n1889_001:0774a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經偈言。",
        "from": "T45n1889_001:0774a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一中解無量。",
        "from": "T45n1889_001:0774a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量中解一。",
        "from": "T45n1889_001:0774a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展轉生非實。",
        "from": "T45n1889_001:0774a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者無所畏。",
        "from": "T45n1889_001:0774a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是二種陀羅尼門。",
        "from": "T45n1889_001:0774a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無量塵沙法門。",
        "from": "T45n1889_001:0774a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉入海印三昧之內。",
        "from": "T45n1889_001:0774a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如天下所有諸水悉入大海無流不納。",
        "from": "T45n1889_001:0774a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海印三昧亦復如是。",
        "from": "T45n1889_001:0774a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉納一切諸契經水。",
        "from": "T45n1889_001:0774a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如空中日月星宿諸天宮殿。",
        "from": "T45n1889_001:0774a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿修羅兵及天帝釋所將兵眾。",
        "from": "T45n1889_001:0774a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆影現大海水中。",
        "from": "T45n1889_001:0774a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海印三昧亦復如是。",
        "from": "T45n1889_001:0774a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無邊法界諸佛菩薩聖眾悉現其中。",
        "from": "T45n1889_001:0774a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼義如頌應知。",
        "from": "T45n1889_001:0774a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其欲讀從印中角生字為始。",
        "from": "T45n1889_001:0774a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨印文轉周迴乃至涅槃為終。",
        "from": "T45n1889_001:0774a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T45n1889_001:0774a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎　─　一　─　剎　─　方　　　是　─　則　　　是　─　則　─　處　─　住　─　無　─　滅　─　無　─　生│　　　　　　　　　　　│　　　│　　　│　　　│　　　　　　　　　　　　　　　　　　　　　　　　　　　│本　　　中　─　解　　　十　　　無　　　法　　　菩　　　處　─　煩　─　惱　─　菩　─　提　─　體　　　無│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　　　　　　　　　　　　　　　　　│　　　│形　　　法　　　於　　　滿　　　量　　　一　　　提　　　異　　　提　─　菩　─　識　─　人　　　無　　　是│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　　　　　　　　　│　　　│　　　│亦　　　切　　　一　　　土　　　法　　　法　　　涅　　　非　　　近　　　本　─　來　　　無　　　二　　　如│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│不　　　一　　　無　　　佛　─　一　　　一　　　槃　　　槃　　　而　　　心　　　無　　　而　　　涅　　　亦│　　　│　　　│　　　　　　　　　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│大　　　切　　　量　─　法　─　則　─　是　　　體　　　涅　　　甚　　　身　　　生　　　親　─　槃　　　法│　　　│　　　　　　　　　　　　　　　　　　　│　　　│　　　│　　　│　　　│　　　　　　　　　　　│一　　　一　─　解　─　中　─　一　─　者　─　智　　　死　　　難　─　見　　　滅　─　一　─　切　─　諸│　　　　　　　　　　　　　　　　　　　　　　　　　　　│佛　─　國　─　容　─　十　─　法　─　界　─　而　　　生　　　槃　─　涅　─　則　─　死　─　生　─　知　　　　　　　　　　　　　　　　　　　　　　　　│　　　　　　　　　　　　　　　　　　　　　　　　　　　│相　─　本　─　剎　─　諸　　　一　─　令　　　諸　　　念　─　一　─　念　─　未　─　曾　─　演　　　不│　　　　　　　　　　　│　　　│　　　│　　　│　　　│　　　　　　　　　　　　　　　　　　　│　　　│恒　　　剎　─　一　　　大　　　塵　　　不　　　世　　　一　　　詣　─　遍　─　促　─　成　　　長　　　死│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　　　　　　　　　│　　　│　　　│如　　　方　　　切　　　曠　─　增　　　是　　　界　　　則　　　十　　　身　─　心　　　縮　　　遠　　　生│　　　│　　　│　　　　　　　　　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│故　　　十　　　塵　─　中　─　皆　─　如　　　不　　　知　　　方　　　知　　　舊　　　不　　　長　　　捨│　　　│　　　　　　　　　　　　　　　　　　　│　　　│　　　│　　　│　　　│　　　│　　　│　　　│無　　　含　─　包　─　塵　─　一　─　累　─　重　　　了　　　求　　　不　　　成　　　亦　─　劫　　　進│　　　　　　　　　　　　　　　　　　　　　　　　　　　│　　　│　　　│　　　│　　　　　　　　　　　│量　─　無　─　數　─　曠　─　大　─　劫　─　智　─　者　　　成　─　佛　　　佛　─　往　─　昔　─　精　生死涅槃非異處　　煩惱菩提體無二　涅槃親而無人識　　菩提近而甚難見　身心本來無生滅　　一切諸法亦如是　無生無滅無住處　　則是菩提涅槃體　智者一中解一切　　一切法中解於一　無量法則是一法　　一法則是無量法　一佛土滿十方剎　　一剎本形亦不大　一佛國容十方界　　而諸世界不重累　一塵包含十方剎　　一切塵中皆如是　不令一塵增曠大　　諸剎本相恒如故　無量無數曠大劫　　智者了知則一念　一念未曾演長遠　　長劫亦不縮成促　遍詣十方求成佛　　不知身心舊成佛　往昔精進捨生死　　不知生死則涅槃論曰。",
        "from": "T45n1889_001:0774b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法門者。",
        "from": "T45n1889_001:0774c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能開一切菩薩慧眼。",
        "from": "T45n1889_001:0774c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能果一切菩薩所願。",
        "from": "T45n1889_001:0774c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切行者。",
        "from": "T45n1889_001:0774c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲生淨土。",
        "from": "T45n1889_001:0774c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當依此門念念習學。",
        "from": "T45n1889_001:0774c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切時中勿令間斷。",
        "from": "T45n1889_001:0774c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘此法者。",
        "from": "T45n1889_001:0774c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用小方便速至佛果。",
        "from": "T45n1889_001:0774c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人乘船。",
        "from": "T45n1889_001:0774c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入海欲度彼岸。",
        "from": "T45n1889_001:0774c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得好順風用小方便速達彼岸。",
        "from": "T45n1889_001:0774c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘此法者。",
        "from": "T45n1889_001:0774c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行住坐臥一切時中恒入滅定。",
        "from": "T45n1889_001:0774c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘此法者。",
        "from": "T45n1889_001:0774c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當得不礙忍地。",
        "from": "T45n1889_001:0774c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是等種種利益。",
        "from": "T45n1889_001:0774c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸佛住無數劫說不能盡。",
        "from": "T45n1889_001:0774c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸佛祕密法藏莫過於此陀羅尼頌。",
        "from": "T45n1889_001:0774c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行者意欲速進無上菩提。",
        "from": "T45n1889_001:0774c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當先發廣大妙願。",
        "from": "T45n1889_001:0774c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生起大慈心。",
        "from": "T45n1889_001:0774c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於善知識生難遭想。",
        "from": "T45n1889_001:0774c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬重三寶破除我慢。",
        "from": "T45n1889_001:0774c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依大乘經至心懺悔一切罪障。",
        "from": "T45n1889_001:0774c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後專求大善知識。",
        "from": "T45n1889_001:0774c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諮問法要。",
        "from": "T45n1889_001:0774c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞說法已。",
        "from": "T45n1889_001:0774c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫念思惟。",
        "from": "T45n1889_001:0774c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如說修行。",
        "from": "T45n1889_001:0774c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切時中無間斷心。",
        "from": "T45n1889_001:0774c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如是不久當入陀羅尼門。",
        "from": "T45n1889_001:0774c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所說海印三昧出華嚴經十地品中。",
        "from": "T45n1889_001:0774c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印像者。",
        "from": "T45n1889_001:0774c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以義安也。",
        "from": "T45n1889_001:0774c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其頌文者。",
        "from": "T45n1889_001:0774c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總述一部經中要義以為頌耳。",
        "from": "T45n1889_001:0774c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何印道無始終者。",
        "from": "T45n1889_001:0774c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯一道離三世際。",
        "from": "T45n1889_001:0774c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前際後際不可攝故。",
        "from": "T45n1889_001:0774c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何印道有盤曲者。",
        "from": "T45n1889_001:0774c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯一道隨緣稱機。",
        "from": "T45n1889_001:0774c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應三乘行現差別故。",
        "from": "T45n1889_001:0774c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以何義故五十六角共成印者。",
        "from": "T45n1889_001:0774c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯地前四十心位及與十地等覺妙覺。",
        "from": "T45n1889_001:0774c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五十二位人等皆依一道而修四攝度眾生故。",
        "from": "T45n1889_001:0774c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十二角表其五十二種人也。",
        "from": "T45n1889_001:0774c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘四角者。",
        "from": "T45n1889_001:0774c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表四攝也。",
        "from": "T45n1889_001:0774c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十信位中仰信一道四攝法故。",
        "from": "T45n1889_001:0774c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十解位中信解一道四攝法故。",
        "from": "T45n1889_001:0774c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十行位中信行一道四攝行故。",
        "from": "T45n1889_001:0774c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十迴向中解行俱圓而行一道四攝行故。",
        "from": "T45n1889_001:0774c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地位中及等覺位正證一道行四攝故。",
        "from": "T45n1889_001:0775a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙覺位中究竟圓證一道根原。",
        "from": "T45n1889_001:0775a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際以四攝法化眾生故。",
        "from": "T45n1889_001:0775a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何頌中縱橫同有十四字者。",
        "from": "T45n1889_001:0775a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯菩薩行雖無量種不離於十波羅蜜四攝行故。",
        "from": "T45n1889_001:0775a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方無邊一切世界諸菩薩等。",
        "from": "T45n1889_001:0775a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆依此行為根本故。",
        "from": "T45n1889_001:0775a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何頌中有始終者。",
        "from": "T45n1889_001:0775a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲安慰怯弱菩薩。",
        "from": "T45n1889_001:0775a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道雖遠修行不絕。",
        "from": "T45n1889_001:0775a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終歸成佛勿退行故。",
        "from": "T45n1889_001:0775a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何頌首及與頌末俱處中者。",
        "from": "T45n1889_001:0775a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯初心所習正觀不異如來正觀智故。",
        "from": "T45n1889_001:0775a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何縱橫四圍循讀皆失句者。",
        "from": "T45n1889_001:0775a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯甚深陀羅尼義。",
        "from": "T45n1889_001:0775a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非斷常見及邊見人所能知故。",
        "from": "T45n1889_001:0775a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何從中尋得句者。",
        "from": "T45n1889_001:0775a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯甚深陀羅尼義中道正觀乃能知故。",
        "from": "T45n1889_001:0775a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何印外更無頌者。",
        "from": "T45n1889_001:0775a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯佛教雖越塵沙不離一道。",
        "from": "T45n1889_001:0775a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一道以外更無法故。",
        "from": "T45n1889_001:0775a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不釋頌中義者。",
        "from": "T45n1889_001:0775a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令行者於少文中多解義故。",
        "from": "T45n1889_001:0775a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐諸行者棄本逐末貪數文句失大益故。",
        "from": "T45n1889_001:0775a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經中言。",
        "from": "T45n1889_001:0775a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧以少聞多解義味。",
        "from": "T45n1889_001:0775a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不願多聞於義不了。",
        "from": "T45n1889_001:0775a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲驗行者得利多少根機深淺行生熟故。",
        "from": "T45n1889_001:0775a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令小見憍慢眾生於正法中生重心故。",
        "from": "T45n1889_001:0775a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此深義非九種人所知境界。",
        "from": "T45n1889_001:0775a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為九。",
        "from": "T45n1889_001:0775a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一非凡夫所知境界。",
        "from": "T45n1889_001:0775a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二非世智辨聰境界。",
        "from": "T45n1889_001:0775a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三非分別法相境界。",
        "from": "T45n1889_001:0775a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四非聲聞緣覺境界。",
        "from": "T45n1889_001:0775a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五非空見行者境界。",
        "from": "T45n1889_001:0775a23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六非散心多聞境界。",
        "from": "T45n1889_001:0775a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七非邊見眾生境界。",
        "from": "T45n1889_001:0775a24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八非斷見眾生境界。",
        "from": "T45n1889_001:0775a24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九非常見眾生境界。",
        "from": "T45n1889_001:0775a25_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等輩互相嫌言。",
        "from": "T45n1889_001:0775a25_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我智則勝彼智必弱。",
        "from": "T45n1889_001:0775a26_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯我獨能盡解佛法。",
        "from": "T45n1889_001:0775a26_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等輩甚可憐愍。",
        "from": "T45n1889_001:0775a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於五尺身起長大我。",
        "from": "T45n1889_001:0775a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將方寸意量虛空盡。",
        "from": "T45n1889_001:0775a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如小兒蠡盃酌海。",
        "from": "T45n1889_001:0775a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂言唯我量大海盡。",
        "from": "T45n1889_001:0775a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小見眾生度量佛法亦復如是。",
        "from": "T45n1889_001:0775a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等若不破除我慢。",
        "from": "T45n1889_001:0775b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不悔本心。",
        "from": "T45n1889_001:0775b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難可教示。",
        "from": "T45n1889_001:0775b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使口誦不會深理。",
        "from": "T45n1889_001:0775b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱使多聞唯長憍慢。",
        "from": "T45n1889_001:0775b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徒勞無益。",
        "from": "T45n1889_001:0775b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經偈言。",
        "from": "T45n1889_001:0775b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如貧窮人日夜數他寶。",
        "from": "T45n1889_001:0775b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無半錢分。",
        "from": "T45n1889_001:0775b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞亦如是。",
        "from": "T45n1889_001:0775b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是等種種眾生。",
        "from": "T45n1889_001:0775b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲護彼故更不釋義。",
        "from": "T45n1889_001:0775b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐彼惡見轉加增長。",
        "from": "T45n1889_001:0775b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永沈苦海無出期故。",
        "from": "T45n1889_001:0775b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經偈言。",
        "from": "T45n1889_001:0775b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破法不信故墜於三惡道。",
        "from": "T45n1889_001:0775b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我寧不說法。",
        "from": "T45n1889_001:0775b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾入於涅槃。",
        "from": "T45n1889_001:0775b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所說。",
        "from": "T45n1889_001:0775b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼義是無邊行等法界智所知境界。",
        "from": "T45n1889_001:0775b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經偈言。",
        "from": "T45n1889_001:0775b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊心法界如虛空。",
        "from": "T45n1889_001:0775b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人乃知佛境界。",
        "from": "T45n1889_001:0775b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以何義故存其本者。",
        "from": "T45n1889_001:0775b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲顯正法畢竟常住三世諸佛共所依故。",
        "from": "T45n1889_001:0775b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如繩墨是常法則前匠後匠共所依故。",
        "from": "T45n1889_001:0775b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次欲令假名菩薩捨末尋本達本原故。",
        "from": "T45n1889_001:0775b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令正法常住不滅法光恒照畢竟不絕破除眾生無明闇故。",
        "from": "T45n1889_001:0775b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令眾生世世生處佛種不斷故存本也。",
        "from": "T45n1889_001:0775b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契經要義略述如是。",
        "from": "T45n1889_001:0775b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲盡其原唯佛窮了。",
        "from": "T45n1889_001:0775b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但仰信解讚揚教耳。",
        "from": "T45n1889_001:0775b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲發弘願。",
        "from": "T45n1889_001:0775b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偈讚曰。",
        "from": "T45n1889_001:0775b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛法甚廣大　　量同於虛空",
        "from": "T45n1889_001:0775b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我已所述義　　如一毛孔分",
        "from": "T45n1889_001:0775b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所述諸功德　　普施眾生類",
        "from": "T45n1889_001:0775b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　速登十地位　　皆共成佛果",
        "from": "T45n1889_001:0775b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海印三昧論一卷",
        "from": "T45n1889_001:0775b22_0",
