[
    {
        "source_sentence": "佛說觀自在菩薩如意心陀羅尼",
        "from": "T20n1081_001:0196b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪經",
        "from": "T20n1081_001:0196b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師義淨奉　制譯",
        "from": "T20n1081_001:0196b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1081_001:0196b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時薄伽梵。",
        "from": "T20n1081_001:0196b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在伽栗斯山。",
        "from": "T20n1081_001:0196b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩無量眾俱。",
        "from": "T20n1081_001:0196b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀自在菩薩摩訶薩。",
        "from": "T20n1081_001:0196b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來詣佛所頂禮雙足。",
        "from": "T20n1081_001:0196b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞三匝以膝著地。",
        "from": "T20n1081_001:0196b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白佛言。",
        "from": "T20n1081_001:0196b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今有大陀羅尼明呪大壇場法。",
        "from": "T20n1081_001:0196b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名青蓮華頂栴檀摩尼心金剛祕密常加護持。",
        "from": "T20n1081_001:0196b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂無障礙觀自在蓮華如意寶輪王陀羅尼心呪第一希有。",
        "from": "T20n1081_001:0196b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於一切所求之事。",
        "from": "T20n1081_001:0196b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心饒益皆得成就。",
        "from": "T20n1081_001:0196b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊大慈聽我說者。",
        "from": "T20n1081_001:0196b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當承佛威力施與一切眾生。",
        "from": "T20n1081_001:0196b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此陀羅尼有大神力大方便門。",
        "from": "T20n1081_001:0196b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今親對佛前次第宣說。",
        "from": "T20n1081_001:0196b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊垂哀加護。",
        "from": "T20n1081_001:0196c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於我及一切持明呪者。",
        "from": "T20n1081_001:0196c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨妙珍寶猶如意樹如意寶珠。",
        "from": "T20n1081_001:0196c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生令其所有悕求應時果遂。",
        "from": "T20n1081_001:0196c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊讚觀自在菩薩言。",
        "from": "T20n1081_001:0196c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是汝能悲愍諸有情類。",
        "from": "T20n1081_001:0196c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我加護汝即對我前。",
        "from": "T20n1081_001:0196c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令汝願求一切滿足。",
        "from": "T20n1081_001:0196c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲宣說無障礙觀自在蓮華如意寶輪王陀羅尼者。",
        "from": "T20n1081_001:0196c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最極甚深隱密心呪隨汝意說。",
        "from": "T20n1081_001:0196c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀自在菩薩。",
        "from": "T20n1081_001:0196c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既蒙佛許悲願盈懷。",
        "from": "T20n1081_001:0196c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於佛前以大悲心而說呪曰。",
        "from": "T20n1081_001:0196c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南謨佛馱耶　南謨達摩耶　南謨僧伽耶　南謨觀自在菩薩摩訶薩　具大悲心者　怛姪他　唵斫羯羅伐底　震多末尼謨訶　鉢蹬謎　嚕嚕嚕嚕　底瑟他　篅(入聲)攞痾羯利沙也　吽發莎訶次說大心呪。",
        "from": "T20n1081_001:0196c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菴鉢踏摩　震多末尼　篅(同前)攞吽次說隨心呪。",
        "from": "T20n1081_001:0196c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菴跋剌陀　鉢亶謎吽爾時觀自在菩薩摩訶薩。",
        "from": "T20n1081_001:0196c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是大輪陀羅尼呪王已。",
        "from": "T20n1081_001:0196c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時大地六種震動諸有天宮龍宮及藥叉宮。",
        "from": "T20n1081_001:0196c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "健達婆阿蘇羅緊奈羅等宮殿。",
        "from": "T20n1081_001:0196c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦皆旋轉迷惑所依。",
        "from": "T20n1081_001:0196c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡魔為障礙者。",
        "from": "T20n1081_001:0196c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見自宮殿皆悉焰起無不驚怖。",
        "from": "T20n1081_001:0196c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡心眾生惡龍惡鬼。",
        "from": "T20n1081_001:0196c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥叉羅剎皆悉顛墜。",
        "from": "T20n1081_001:0196c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於地獄中受苦眾生。",
        "from": "T20n1081_001:0196c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉離苦得生天上。",
        "from": "T20n1081_001:0196c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時會中於世尊前。",
        "from": "T20n1081_001:0196c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天雨寶華寶莊嚴具。",
        "from": "T20n1081_001:0196c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於虛空中奏天伎樂。",
        "from": "T20n1081_001:0196c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出種種聲廣陳供養。",
        "from": "T20n1081_001:0196c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊以美妙音。",
        "from": "T20n1081_001:0196c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚觀自在菩薩摩訶薩言。",
        "from": "T20n1081_001:0196c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉觀自在。",
        "from": "T20n1081_001:0196c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝所宣說是大呪王實難逢遇。",
        "from": "T20n1081_001:0196c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生求願滿足獲大果報。",
        "from": "T20n1081_001:0196c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦此呪所有法式我今當說。",
        "from": "T20n1081_001:0196c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人苾芻苾芻尼鄔波索迦鄔波斯迦。",
        "from": "T20n1081_001:0196c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心悕求此生現報者。",
        "from": "T20n1081_001:0197a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當一心受持此呪。",
        "from": "T20n1081_001:0197a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲受持時不問日月星辰吉凶并別修齋戒。",
        "from": "T20n1081_001:0197a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不假洗浴及以淨衣。",
        "from": "T20n1081_001:0197a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但止攝心口誦不懈。",
        "from": "T20n1081_001:0197a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千種事所願皆成。",
        "from": "T20n1081_001:0197a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無明呪能得與此如意呪王勢力齊者。",
        "from": "T20n1081_001:0197a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故先當除諸罪障。",
        "from": "T20n1081_001:0197a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次能成就一切事業。",
        "from": "T20n1081_001:0197a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能銷除受無間獄五逆重罪。",
        "from": "T20n1081_001:0197a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能殄滅一切病苦皆得除差。",
        "from": "T20n1081_001:0197a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切重業悉能破壞。",
        "from": "T20n1081_001:0197a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有熱病或晝或夜。",
        "from": "T20n1081_001:0197a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一日瘧乃至四日瘧。",
        "from": "T20n1081_001:0197a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風黃痰癊三集嬰纏。",
        "from": "T20n1081_001:0197a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是病等誦呪便差。",
        "from": "T20n1081_001:0197a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有他人厭魅蠱毒。",
        "from": "T20n1081_001:0197a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆銷滅無復遺餘。",
        "from": "T20n1081_001:0197a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使一切癰癭惡瘡。",
        "from": "T20n1081_001:0197a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疥癩疽癬周遍其身。",
        "from": "T20n1081_001:0197a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并及眼耳鼻舌脣口牙齒咽喉頂腦胸脇心腹腰背脚手頭面等痛。",
        "from": "T20n1081_001:0197a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "支節煩疼半身不隨。",
        "from": "T20n1081_001:0197a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹脹塊滿飲食不銷。",
        "from": "T20n1081_001:0197a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從頭至足但是疾苦無不痊除。",
        "from": "T20n1081_001:0197a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有藥叉羅剎。",
        "from": "T20n1081_001:0197a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦惡魔鬼神。",
        "from": "T20n1081_001:0197a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸行惡者皆不得便。",
        "from": "T20n1081_001:0197a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無刀杖兵箭。",
        "from": "T20n1081_001:0197a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火惡毒惡風雨雹。",
        "from": "T20n1081_001:0197a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨賊劫盜能及其身。",
        "from": "T20n1081_001:0197a18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無王賊無有橫死來相侵害。",
        "from": "T20n1081_001:0197a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡夢想蚖蛇蝮蠍。",
        "from": "T20n1081_001:0197a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守宮百足及以蜘蛛。",
        "from": "T20n1081_001:0197a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡毒獸虎狼師子悉不能害。",
        "from": "T20n1081_001:0197a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兵戈戰陣皆得勝利。",
        "from": "T20n1081_001:0197a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有諍訟亦得和解。",
        "from": "T20n1081_001:0197a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦一遍如上諸事悉皆遂意。",
        "from": "T20n1081_001:0197a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若日日誦一百八遍。",
        "from": "T20n1081_001:0197a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見觀自在菩薩告言。",
        "from": "T20n1081_001:0197a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子汝等勿怖。",
        "from": "T20n1081_001:0197a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求何願一切施汝。",
        "from": "T20n1081_001:0197a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛自現其身。",
        "from": "T20n1081_001:0197a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見極樂世界種種莊嚴如經廣說。",
        "from": "T20n1081_001:0197a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并見極樂世界諸菩薩眾。",
        "from": "T20n1081_001:0197a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見十方一切諸佛。",
        "from": "T20n1081_001:0197a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見觀自在菩薩所居之處補怛羅山。",
        "from": "T20n1081_001:0197a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得自身清淨。",
        "from": "T20n1081_001:0197a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為諸王公卿宰輔恭敬供養眾人。",
        "from": "T20n1081_001:0197a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛敬所生之處不入母胎。",
        "from": "T20n1081_001:0197a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生諸相具足。",
        "from": "T20n1081_001:0197a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在所生處常得宿命。",
        "from": "T20n1081_001:0197b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從今日乃至成佛。",
        "from": "T20n1081_001:0197b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮惡道常生佛前。",
        "from": "T20n1081_001:0197b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀自在菩薩白佛言。",
        "from": "T20n1081_001:0197b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此栴檀心輪陀羅尼如我所說。",
        "from": "T20n1081_001:0197b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若苾芻苾芻尼鄔波索迦鄔波斯迦。",
        "from": "T20n1081_001:0197b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有至誠心所憶念。",
        "from": "T20n1081_001:0197b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能受持者必得成就。",
        "from": "T20n1081_001:0197b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟須深信不得生疑(更有藥法在本藏中此隱不出)爾時世尊讚觀自在菩薩善哉善哉汝大慈無量。",
        "from": "T20n1081_001:0197b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能說此微妙如意心輪陀羅尼法。",
        "from": "T20n1081_001:0197b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於贍部洲有諸眾生。",
        "from": "T20n1081_001:0197b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心口誦即得親驗。",
        "from": "T20n1081_001:0197b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝依我教於諸有情。",
        "from": "T20n1081_001:0197b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數數勤加策勵示誨。",
        "from": "T20n1081_001:0197b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得證驗為現其身。",
        "from": "T20n1081_001:0197b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫違我勅我當隨喜。",
        "from": "T20n1081_001:0197b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀自在菩薩白佛言。",
        "from": "T20n1081_001:0197b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我於無量劫來。",
        "from": "T20n1081_001:0197b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以慈悲心於受苦眾生常作擁護惟願證知。",
        "from": "T20n1081_001:0197b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾生故說此如意輪陀羅尼。",
        "from": "T20n1081_001:0197b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有受持常自作業。",
        "from": "T20n1081_001:0197b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心誦者所願成辦。",
        "from": "T20n1081_001:0197b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今承佛威力如是救苦。",
        "from": "T20n1081_001:0197b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀自在菩薩。",
        "from": "T20n1081_001:0197b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此如意輪羅尼經已。",
        "from": "T20n1081_001:0197b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大眾皆悉歡喜信受奉行。",
        "from": "T20n1081_001:0197b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說觀自在菩薩如意心陀羅尼呪經",
        "from": "T20n1081_001:0197b18_0",
        "context_with_next_sentence": false
    }
]