[
    {
        "source_sentence": "居士傳四十三",
        "from": "X88n1646_043:0260a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李卓吾傳",
        "from": "X88n1646_043:0260a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李卓吾。",
        "from": "X88n1646_043:0260a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名贄。",
        "from": "X88n1646_043:0260a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泉州晉江人。",
        "from": "X88n1646_043:0260a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉靖間領鄉薦為教官。",
        "from": "X88n1646_043:0260a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬歷初歷南京刑部主事。",
        "from": "X88n1646_043:0260a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出為姚安知府。",
        "from": "X88n1646_043:0260a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾風骨孤峻。",
        "from": "X88n1646_043:0260a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善觸人。",
        "from": "X88n1646_043:0260a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其學不守繩轍。",
        "from": "X88n1646_043:0260a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入儒佛之間。",
        "from": "X88n1646_043:0260a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以空宗為歸。",
        "from": "X88n1646_043:0260a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時諸老師獨推龍谿王先生。",
        "from": "X88n1646_043:0260a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近谿羅先生甞從之論學。",
        "from": "X88n1646_043:0260a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又甞與耿天臺．鄧石陽遺書辨難。",
        "from": "X88n1646_043:0260a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反復萬餘言。",
        "from": "X88n1646_043:0260a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抉摘世儒情偽。",
        "from": "X88n1646_043:0260a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發明本心。",
        "from": "X88n1646_043:0260a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剝膚見骨。",
        "from": "X88n1646_043:0260a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在姚安自治清苦。",
        "from": "X88n1646_043:0260a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為政舉大體。",
        "from": "X88n1646_043:0260a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往往喜與衲子遊處。",
        "from": "X88n1646_043:0260a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住伽藍。",
        "from": "X88n1646_043:0260a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "判事而事辦。",
        "from": "X88n1646_043:0260a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時上官嚴刻。",
        "from": "X88n1646_043:0260a11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吏民多不安。",
        "from": "X88n1646_043:0260a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾言曰。",
        "from": "X88n1646_043:0260a11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邊方雜夷。",
        "from": "X88n1646_043:0260a11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法難盡執。",
        "from": "X88n1646_043:0260a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日過一日。",
        "from": "X88n1646_043:0260a12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與軍民共享太平足矣。",
        "from": "X88n1646_043:0260a12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仕於此者携家萬里而來。",
        "from": "X88n1646_043:0260a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動以過失狼狽去。",
        "from": "X88n1646_043:0260a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尤不可不念之。",
        "from": "X88n1646_043:0260a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有一長即為賢者。",
        "from": "X88n1646_043:0260a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈容備責耶。",
        "from": "X88n1646_043:0260a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居三年以病告。",
        "from": "X88n1646_043:0260a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許。",
        "from": "X88n1646_043:0260a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂入雞足山閱藏經不出。",
        "from": "X88n1646_043:0260a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御史劉維疏令致仕。",
        "from": "X88n1646_043:0260a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂客居黃安。",
        "from": "X88n1646_043:0260a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋至麻城龍潭湖上。",
        "from": "X88n1646_043:0260a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薙髮去冠服。",
        "from": "X88n1646_043:0260a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即所居為禪院。",
        "from": "X88n1646_043:0260a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居常與侍者論出家事曰。",
        "from": "X88n1646_043:0260a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間有三等人宜出家。",
        "from": "X88n1646_043:0260a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一如莊周．梅福之徒。",
        "from": "X88n1646_043:0260a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以生為我梏。",
        "from": "X88n1646_043:0260a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形為我辱。",
        "from": "X88n1646_043:0260a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智為我毒。",
        "from": "X88n1646_043:0260a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灼然見身世如贅瘤。",
        "from": "X88n1646_043:0260a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然不得不棄官隱者一也。",
        "from": "X88n1646_043:0260a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一如嚴光．阮籍．陳摶．邵雍之徒。",
        "from": "X88n1646_043:0260a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苟不得比於傅說之遇高宗。",
        "from": "X88n1646_043:0260a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太公之遇文王。",
        "from": "X88n1646_043:0260a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "管仲之遇桓公。",
        "from": "X88n1646_043:0260a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔明之遇先主。",
        "from": "X88n1646_043:0260a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則寧隱毋出。",
        "from": "X88n1646_043:0260a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦其一也。",
        "from": "X88n1646_043:0260a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又其一者陶淵明是也。",
        "from": "X88n1646_043:0260a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦愛富貴。",
        "from": "X88n1646_043:0260a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦苦貧窮。",
        "from": "X88n1646_043:0260a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦貧窮故以乞食為耻而曰。",
        "from": "X88n1646_043:0260a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叩門拙言辭。",
        "from": "X88n1646_043:0260a24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛富貴故求為彭澤令。",
        "from": "X88n1646_043:0260a24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然無奈其不肯折腰。",
        "from": "X88n1646_043:0260a24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何是以八十日便賦歸去也。",
        "from": "X88n1646_043:0260b01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此又其一也。",
        "from": "X88n1646_043:0260b01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侍者進曰。",
        "from": "X88n1646_043:0260b02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先生於三者何居。",
        "from": "X88n1646_043:0260b02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾曰。",
        "from": "X88n1646_043:0260b02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓哉莊周．梅福之見。",
        "from": "X88n1646_043:0260b02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無是也。",
        "from": "X88n1646_043:0260b03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "待知己之主而後出。",
        "from": "X88n1646_043:0260b03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必具盖世才。",
        "from": "X88n1646_043:0260b03_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦無是也。",
        "from": "X88n1646_043:0260b04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其陶公乎。",
        "from": "X88n1646_043:0260b04_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫陶公清風被千古。",
        "from": "X88n1646_043:0260b04_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余何人而敢云庶幾焉。",
        "from": "X88n1646_043:0260b04_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其一念真實。",
        "from": "X88n1646_043:0260b05_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不欲受世間管束。",
        "from": "X88n1646_043:0260b05_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則偶與之同也。",
        "from": "X88n1646_043:0260b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾喜接人。",
        "from": "X88n1646_043:0260b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來問學者無論緇白。",
        "from": "X88n1646_043:0260b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "披心酬對。",
        "from": "X88n1646_043:0260b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風動黃麻間。",
        "from": "X88n1646_043:0260b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有女人來聽法。",
        "from": "X88n1646_043:0260b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或言女人見短不堪學道。",
        "from": "X88n1646_043:0260b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾曰。",
        "from": "X88n1646_043:0260b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人有男女。",
        "from": "X88n1646_043:0260b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見亦有男女乎。",
        "from": "X88n1646_043:0260b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且彼為法來者。",
        "from": "X88n1646_043:0260b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男子不如也。",
        "from": "X88n1646_043:0260b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而麻黃間士大夫皆大噪。",
        "from": "X88n1646_043:0260b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斥為左道惑眾。",
        "from": "X88n1646_043:0260b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲逐去之。",
        "from": "X88n1646_043:0260b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾笑曰。",
        "from": "X88n1646_043:0260b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾誠左道耶。",
        "from": "X88n1646_043:0260b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即加冠可也。",
        "from": "X88n1646_043:0260b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂服其舊服。",
        "from": "X88n1646_043:0260b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御史馬經綸甞往問易義。",
        "from": "X88n1646_043:0260b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大服事以師禮奉之。",
        "from": "X88n1646_043:0260b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入黃蘗山。",
        "from": "X88n1646_043:0260b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋御以北館。",
        "from": "X88n1646_043:0260b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於通州復為言官所劾。",
        "from": "X88n1646_043:0260b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下詔獄。",
        "from": "X88n1646_043:0260b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獄成。",
        "from": "X88n1646_043:0260b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒歸原籍。",
        "from": "X88n1646_043:0260b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾曰。",
        "from": "X88n1646_043:0260b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾年七十六。",
        "from": "X88n1646_043:0260b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死耳何以歸為。",
        "from": "X88n1646_043:0260b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奪刀自剄死。",
        "from": "X88n1646_043:0260b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經綸備禮殮之。",
        "from": "X88n1646_043:0260b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葬於通州北門外(明文偶鈔．溫陵外紀)。",
        "from": "X88n1646_043:0260b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_043:0260b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予始觀卓吾居士論古之書。",
        "from": "X88n1646_043:0260b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "駭其言迹。",
        "from": "X88n1646_043:0260b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其行事動為世詬病。",
        "from": "X88n1646_043:0260b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為居士實自取之也。",
        "from": "X88n1646_043:0260b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而讀居士論學書。",
        "from": "X88n1646_043:0260b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服之。",
        "from": "X88n1646_043:0260b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼若居士者。",
        "from": "X88n1646_043:0260b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂知本者與。",
        "from": "X88n1646_043:0260b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士既出家。",
        "from": "X88n1646_043:0260b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不受戒。",
        "from": "X88n1646_043:0260b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無何又反冠服。",
        "from": "X88n1646_043:0260b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其戲耶。",
        "from": "X88n1646_043:0260b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有激而為此耶。",
        "from": "X88n1646_043:0260b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則予不足以知之矣。",
        "from": "X88n1646_043:0260b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_043:0260b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓吾努目。",
        "from": "X88n1646_043:0260b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "允初低眉。",
        "from": "X88n1646_043:0260b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以低眉人寫努目人。",
        "from": "X88n1646_043:0260b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼光忽如巖下電。",
        "from": "X88n1646_043:0260b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此知歸子所謂落落自喜者與。",
        "from": "X88n1646_043:0260b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅臺山云。",
        "from": "X88n1646_043:0260b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古之傷心人別有懷抱。",
        "from": "X88n1646_043:0260b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾與卓吾先生亦云○中間一段。",
        "from": "X88n1646_043:0260b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無古無今。",
        "from": "X88n1646_043:0260c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒼莽悲懷。",
        "from": "X88n1646_043:0260c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恰好閒中。",
        "from": "X88n1646_043:0260c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "磕著痛處。",
        "from": "X88n1646_043:0260c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觸著奇癢難奈處。",
        "from": "X88n1646_043:0260c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "借一段冷語消釋。",
        "from": "X88n1646_043:0260c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀者切勿認作實話。",
        "from": "X88n1646_043:0260c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈍置卓吾。",
        "from": "X88n1646_043:0260c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈍置知歸。",
        "from": "X88n1646_043:0260c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今日讀此。",
        "from": "X88n1646_043:0260c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃見卓吾先生可敬處。",
        "from": "X88n1646_043:0260c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可愛處。",
        "from": "X88n1646_043:0260c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今日讀此乃如讀屈子天問。",
        "from": "X88n1646_043:0260c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀莊子天下篇。",
        "from": "X88n1646_043:0260c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀枚叔七發。",
        "from": "X88n1646_043:0260c05_11",
        "context_with_next_sentence": false
    }
]