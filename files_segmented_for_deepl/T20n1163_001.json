[
    {
        "source_sentence": "佛說雨寶陀羅尼經",
        "from": "T20n1163_001:0667c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏沙門大廣智不空奉　詔譯",
        "from": "T20n1163_001:0667c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1163_001:0667c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時薄伽梵住憍睒彌國建吒迦林。",
        "from": "T20n1163_001:0667c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾五百人俱。",
        "from": "T20n1163_001:0667c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又與多諸大菩薩摩訶薩俱。",
        "from": "T20n1163_001:0667c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時憍睒彌國中有一長者。",
        "from": "T20n1163_001:0667c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰妙月。",
        "from": "T20n1163_001:0667c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根寂靜心意寂靜。",
        "from": "T20n1163_001:0667c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多有男女及多僮僕。",
        "from": "T20n1163_001:0667c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨信成就。",
        "from": "T20n1163_001:0667c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛所頭面禮足。",
        "from": "T20n1163_001:0667c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繞百千匝却住一面。",
        "from": "T20n1163_001:0667c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬而白佛言。",
        "from": "T20n1163_001:0667c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊欲問如來應正等覺。",
        "from": "T20n1163_001:0667c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少有所疑事。",
        "from": "T20n1163_001:0667c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願大慈垂愍聽許。",
        "from": "T20n1163_001:0667c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告長者言。",
        "from": "T20n1163_001:0667c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣汝意問。",
        "from": "T20n1163_001:0667c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為汝說。",
        "from": "T20n1163_001:0667c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令汝心喜。",
        "from": "T20n1163_001:0667c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼長者聞是語已歡喜踊躍。",
        "from": "T20n1163_001:0667c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何善男子善女人諸貧匱者可得富饒。",
        "from": "T20n1163_001:0667c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有疾病令無疾病。",
        "from": "T20n1163_001:0667c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告妙月長者言。",
        "from": "T20n1163_001:0667c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣作如是問。",
        "from": "T20n1163_001:0667c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼長者重白佛言。",
        "from": "T20n1163_001:0667c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我等在家多諸眷屬。",
        "from": "T20n1163_001:0667c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資財乏少難可支濟。",
        "from": "T20n1163_001:0668a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又多疾病。",
        "from": "T20n1163_001:0668a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願世尊開示法要。",
        "from": "T20n1163_001:0668a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令貧者永離貧窮。",
        "from": "T20n1163_001:0668a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倉庫財寶皆悉盈滿。",
        "from": "T20n1163_001:0668a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存濟家中妻子男女眷屬有來求者必生歡喜。",
        "from": "T20n1163_001:0668a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為大施主。",
        "from": "T20n1163_001:0668a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使諸倉庫金銀珍寶如意摩尼金剛諸珍商佉室羅赤珠碼碯金寶之類豐饒無有盡竭。",
        "from": "T20n1163_001:0668a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周給親屬廣修惠施饒益有情。",
        "from": "T20n1163_001:0668a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告妙月長者言。",
        "from": "T20n1163_001:0668a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我於過去阿僧祇劫前遇佛世尊。",
        "from": "T20n1163_001:0668a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名持金剛海音如來應正遍知。",
        "from": "T20n1163_001:0668a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從彼如來受得此雨寶陀羅尼。",
        "from": "T20n1163_001:0668a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦思惟計念隨喜為他廣說流布。",
        "from": "T20n1163_001:0668a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此陀羅尼威德力故。",
        "from": "T20n1163_001:0668a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子人與非人藥叉羅剎畢隷多畢舍遮鳩槃拏烏娑多羅迦布單那羯吒布單那等起惡心者。",
        "from": "T20n1163_001:0668a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能為害。",
        "from": "T20n1163_001:0668a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有諸鬼噉人脂髓膿血涕唾大小便利欲來惱者。",
        "from": "T20n1163_001:0668a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能為障礙。",
        "from": "T20n1163_001:0668a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告妙月。",
        "from": "T20n1163_001:0668a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子心念手持書寫。",
        "from": "T20n1163_001:0668a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但聞名字受持隨喜廣為他敷演者。",
        "from": "T20n1163_001:0668a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼善男子善女人長夜安隱受諸快樂。",
        "from": "T20n1163_001:0668a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為瑜伽資糧安隱豐饒故。",
        "from": "T20n1163_001:0668a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人欲受持此雨寶陀羅尼者。",
        "from": "T20n1163_001:0668a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應供養一切如來。",
        "from": "T20n1163_001:0668a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夜二夜或三夜。",
        "from": "T20n1163_001:0668a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心誦持。",
        "from": "T20n1163_001:0668a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受敬淨信三寶諸天悉皆歡喜。",
        "from": "T20n1163_001:0668a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即雨財寶穀麥。",
        "from": "T20n1163_001:0668a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼讀誦法師故。",
        "from": "T20n1163_001:0668a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T20n1163_001:0668a22_3",
        "context_with_next_sentence": true
    },
    {
