[
    {
        "source_sentence": "大悲心陀羅尼修行念誦略儀",
        "from": "T20n1066_001:0126c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐北天竺三藏沙門大廣智",
        "from": "T20n1066_001:0126c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空奉　詔譯",
        "from": "T20n1066_001:0126c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依灌頂道場經。",
        "from": "T20n1066_001:0126c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說修陀羅尼法門。",
        "from": "T20n1066_001:0126c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求速出離生死大海。",
        "from": "T20n1066_001:0126c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證無上菩提者。",
        "from": "T20n1066_001:0126c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須先入諸佛如來海會灌頂道場。",
        "from": "T20n1066_001:0126c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受灌頂已發歡喜心。",
        "from": "T20n1066_001:0126c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師親受念誦法則。",
        "from": "T20n1066_001:0126c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於淨室山林流水。",
        "from": "T20n1066_001:0126c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最為上勝。",
        "from": "T20n1066_001:0126c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立道場安置本尊。",
        "from": "T20n1066_001:0127a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修真言者面向東方。",
        "from": "T20n1066_001:0127a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以瞿摩夷塗拭其地。",
        "from": "T20n1066_001:0127a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以白檀香摩為香泥。",
        "from": "T20n1066_001:0127a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以用塗壇。",
        "from": "T20n1066_001:0127a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或方或圓隨意大小。",
        "from": "T20n1066_001:0127a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於壇上散華燒香供養。",
        "from": "T20n1066_001:0127a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取二淨器盛滿香水。",
        "from": "T20n1066_001:0127a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置壇中以用供養。",
        "from": "T20n1066_001:0127a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者澡浴或不澡浴悉無障礙。",
        "from": "T20n1066_001:0127a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但當運心思惟觀察。",
        "from": "T20n1066_001:0127a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生本性清淨。",
        "from": "T20n1066_001:0127a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸客塵之所覆蔽。",
        "from": "T20n1066_001:0127a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見清淨真如法性。",
        "from": "T20n1066_001:0127a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令清淨故。",
        "from": "T20n1066_001:0127a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當至心念此真言三遍七遍。",
        "from": "T20n1066_001:0127a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0127a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)娑嚩(二合)婆嚩戍馱薩嚩馱麼娑嚩(二合)婆嚩戍度憾由此真言加持故。",
        "from": "T20n1066_001:0127a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意業悉得清淨。",
        "from": "T20n1066_001:0127a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後五輪著地。",
        "from": "T20n1066_001:0127a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命禮十方一切諸佛諸大菩薩方廣大乘。",
        "from": "T20n1066_001:0127a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地懺悔隨喜勸請發願。",
        "from": "T20n1066_001:0127a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸命十方等正覺　　最勝妙法菩薩眾　以身口意清淨業　　慇懃合掌恭敬禮　無始輪迴諸有中　　身口意業所生罪　如佛菩薩所懺悔　　我今陳懺亦如是　諸佛菩薩行願中　　金剛三業所生福　緣覺聲聞及有情　　所集善根盡隨喜　一切世燈坐道場　　覺眼開敷照三有　我今胡跪先勸請　　轉於無上妙法輪　所有如來三界主　　臨槃無餘涅槃者　我皆勸請令久住　　不捨悲願救世間　懺悔勸請隨喜福　　願我不失菩提心　諸佛菩薩妙眾中　　常為善友不厭捨　離於八難生無難　　宿命住智相嚴身　遠離愚癡具悲智　　悉能滿足波羅蜜　富樂豐饒生勝族　　眷屬廣多常熾盛　四無礙辯十自在　　六通諸禪悉圓滿　如金剛幢及普賢　　願讚迴向亦如是次禮本尊及諸聖眾真言曰。",
        "from": "T20n1066_001:0127a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)鉢那摩(二合)吠(微閉切)由此真言作禮故。",
        "from": "T20n1066_001:0127b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊聖眾受為主宰。",
        "from": "T20n1066_001:0127b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次對本尊前結跏趺坐或半跏趺坐。",
        "from": "T20n1066_001:0127b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大悲心我修此法。",
        "from": "T20n1066_001:0127b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切眾生速出生死大海。",
        "from": "T20n1066_001:0127b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證無上正等菩提。",
        "from": "T20n1066_001:0127b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先磨諸香以用塗手。",
        "from": "T20n1066_001:0127b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結於佛部三昧耶印。",
        "from": "T20n1066_001:0127b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手虛心合掌。",
        "from": "T20n1066_001:0127b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開二頭指屈輔二中指上節。",
        "from": "T20n1066_001:0127b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指屈輔二頭指下節。",
        "from": "T20n1066_001:0127b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其印即成。",
        "from": "T20n1066_001:0127b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置印當心。",
        "from": "T20n1066_001:0127b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想於如來三十二相八十種好。",
        "from": "T20n1066_001:0127b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明如對目前。",
        "from": "T20n1066_001:0127b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心誦真言七遍。",
        "from": "T20n1066_001:0127b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0127b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵怛他誐姤那婆(二合)嚩野沙嚩(二合)賀由此印及誦真言故。",
        "from": "T20n1066_001:0127b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即驚覺一切如來。",
        "from": "T20n1066_001:0127b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉當護念加持行者。",
        "from": "T20n1066_001:0127b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以光明照觸我身。",
        "from": "T20n1066_001:0127b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪障皆得消滅。",
        "from": "T20n1066_001:0127b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命延遠福德增長。",
        "from": "T20n1066_001:0127b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部聖眾擁護歡喜。",
        "from": "T20n1066_001:0127b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世離諸惡趣。",
        "from": "T20n1066_001:0127b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華化生。",
        "from": "T20n1066_001:0127b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證無上正等菩提。",
        "from": "T20n1066_001:0127b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華部三昧耶印。",
        "from": "T20n1066_001:0127b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手虛心合掌。",
        "from": "T20n1066_001:0127b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散開二頭指二中指二無名指。",
        "from": "T20n1066_001:0127b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈如蓮華形。",
        "from": "T20n1066_001:0127b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安印當心。",
        "from": "T20n1066_001:0127b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想觀自在相好具足。",
        "from": "T20n1066_001:0127b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言七遍於頂右散印。",
        "from": "T20n1066_001:0127b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0127b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)鉢那麼(二合)捺婆(二合)嚩野娑嚩(二合)賀(引)由此印及誦真言故。",
        "from": "T20n1066_001:0127b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即覺悟觀自在等持蓮華者。",
        "from": "T20n1066_001:0127b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩蓮華部聖眾。",
        "from": "T20n1066_001:0127b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆歡喜加持護念。",
        "from": "T20n1066_001:0127b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩光明照觸其身。",
        "from": "T20n1066_001:0127b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有業障皆得除滅。",
        "from": "T20n1066_001:0127b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩常為善友。",
        "from": "T20n1066_001:0127b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛部三昧耶印。",
        "from": "T20n1066_001:0127b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左手翻掌向外。",
        "from": "T20n1066_001:0127c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手掌背安左手背。",
        "from": "T20n1066_001:0127c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用左右大指小指。",
        "from": "T20n1066_001:0127c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手相鉤如金剛杵形。",
        "from": "T20n1066_001:0127c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置印當心。",
        "from": "T20n1066_001:0127c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想金剛手菩薩。",
        "from": "T20n1066_001:0127c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言七遍頂左散之。",
        "from": "T20n1066_001:0127c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0127c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日嚕(二合)那婆(二合)嚩野娑嚩(二合)賀(引)由此印及誦真言故。",
        "from": "T20n1066_001:0127c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "警覺金剛部聖眾。",
        "from": "T20n1066_001:0127c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切持金剛者加持擁護。",
        "from": "T20n1066_001:0127c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪障悉皆除滅。",
        "from": "T20n1066_001:0127c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切痛苦不著於身。",
        "from": "T20n1066_001:0127c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得金剛堅固之體。",
        "from": "T20n1066_001:0127c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結護身三昧耶印。",
        "from": "T20n1066_001:0127c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手內相叉右押左。",
        "from": "T20n1066_001:0127c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二中指頭相拄。",
        "from": "T20n1066_001:0127c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二頭指如鉤形。",
        "from": "T20n1066_001:0127c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中指背勿令相著。",
        "from": "T20n1066_001:0127c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並二大指押二無名指。",
        "from": "T20n1066_001:0127c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成。",
        "from": "T20n1066_001:0127c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印身五處。",
        "from": "T20n1066_001:0127c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂額次左右肩次心喉。",
        "from": "T20n1066_001:0127c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散印。",
        "from": "T20n1066_001:0127c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦真言一遍。",
        "from": "T20n1066_001:0127c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0127c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合)儗[寧*頁](二合)鉢囉(二合)儞鉢多(二合)野娑嚩(二合)賀由結此印及誦真言加持故。",
        "from": "T20n1066_001:0127c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成被金剛甲冑。",
        "from": "T20n1066_001:0127c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有毘那夜迦及諸魔作障礙者退散馳走。",
        "from": "T20n1066_001:0127c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉見行者光明被身威德自在。",
        "from": "T20n1066_001:0127c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若居山林及在險難皆悉無畏。",
        "from": "T20n1066_001:0127c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火等災一切厄難。",
        "from": "T20n1066_001:0127c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎狼師子刀杖枷鎖。",
        "from": "T20n1066_001:0127c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等事悉皆消滅見者歡喜。",
        "from": "T20n1066_001:0127c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終已後不墮惡趣。",
        "from": "T20n1066_001:0127c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生諸佛淨妙國土。",
        "from": "T20n1066_001:0127c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛輪大菩薩大威德契已。",
        "from": "T20n1066_001:0127c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入曼拏羅者受得三世無障礙三種律儀。",
        "from": "T20n1066_001:0127c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由入曼拏羅身心備十微塵剎世界微塵數三摩耶無作禁戒。",
        "from": "T20n1066_001:0127c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因屈身俯仰發言吐氣起心動念。",
        "from": "T20n1066_001:0127c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廢忘菩提之心退失善根。",
        "from": "T20n1066_001:0127c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此印契密言殊勝方便誦持作意。",
        "from": "T20n1066_001:0127c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除違犯愆咎。",
        "from": "T20n1066_001:0127c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩耶如故倍加光顯。",
        "from": "T20n1066_001:0127c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能淨身口意故。",
        "from": "T20n1066_001:0127c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則成入一切曼拏羅。",
        "from": "T20n1066_001:0127c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得灌頂三摩耶。",
        "from": "T20n1066_001:0128a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應結印誦真言七遍。",
        "from": "T20n1066_001:0128a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽內相叉。",
        "from": "T20n1066_001:0128a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二定。",
        "from": "T20n1066_001:0128a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二念糺二定。",
        "from": "T20n1066_001:0128a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二慧並申直。",
        "from": "T20n1066_001:0128a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安契當於心。",
        "from": "T20n1066_001:0128a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠心誦七遍。",
        "from": "T20n1066_001:0128a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0128a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫悉底哩野(四合)地尾(二合)迦喃(一)薩嚩怛他誐哆喃(二)闇(三)尾囉[口*爾]尾囉[口*爾](四)摩訶作羯囉(二合)嚩日哩(二合五)娑哆娑哆(六)娑囉帝娑囉帝(七)怛囉(二合)以怛囉(二合)以(八)尾馱摩[寧*頁](九)三畔惹[寧*頁](十)怛囉(二合)摩底悉馱(十一)儗哩(二合)怛囕(二合十二)娑嚩(二合)賀(引十三)誦此真言時作是觀念。",
        "from": "T20n1066_001:0128a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虛空界遍法界生死六趣有情。",
        "from": "T20n1066_001:0128a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速得入普集會大曼拏羅。",
        "from": "T20n1066_001:0128a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同聖者。",
        "from": "T20n1066_001:0128a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結定印入四無量心觀。",
        "from": "T20n1066_001:0128a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初入慈無量心定。",
        "from": "T20n1066_001:0128a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以殷淨心遍緣。",
        "from": "T20n1066_001:0128a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道四生一切有情。",
        "from": "T20n1066_001:0128a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆具如來藏備三種身口意金剛。",
        "from": "T20n1066_001:0128a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我修三密功德力故。",
        "from": "T20n1066_001:0128a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切有情。",
        "from": "T20n1066_001:0128a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同普賢菩薩。",
        "from": "T20n1066_001:0128a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T20n1066_001:0128a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦大悲三摩地真言曰。",
        "from": "T20n1066_001:0128a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)摩賀昧怛囉(二合)野　娑　頗　囉次入悲無量心三摩地智。",
        "from": "T20n1066_001:0128a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以悲愍心遍緣。",
        "from": "T20n1066_001:0128a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道四生一切有情。",
        "from": "T20n1066_001:0128a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈溺生死苦海。",
        "from": "T20n1066_001:0128a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不悟自心。",
        "from": "T20n1066_001:0128a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄生分別起種種煩惱業。",
        "from": "T20n1066_001:0128a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故不達真如平等如虛空。",
        "from": "T20n1066_001:0128a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起恒河沙功德。",
        "from": "T20n1066_001:0128a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我修三密加持力故。",
        "from": "T20n1066_001:0128a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切有情。",
        "from": "T20n1066_001:0128a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同虛空藏菩薩。",
        "from": "T20n1066_001:0128a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T20n1066_001:0128a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦大悲三摩地真言曰。",
        "from": "T20n1066_001:0128a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵摩賀迦嚕拏野娑頗(二合)囉",
        "from": "T20n1066_001:0128a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次入喜無量心三摩地智。",
        "from": "T20n1066_001:0128a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以清淨心遍緣。",
        "from": "T20n1066_001:0128a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道四生一切有情。",
        "from": "T20n1066_001:0128a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來清淨由如蓮華。",
        "from": "T20n1066_001:0128a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不染客塵自性清淨。",
        "from": "T20n1066_001:0128a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我修三密功德力故。",
        "from": "T20n1066_001:0128a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切有情。",
        "from": "T20n1066_001:0128a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同觀自在菩薩。",
        "from": "T20n1066_001:0128a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T20n1066_001:0128a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦大喜三摩地真言曰。",
        "from": "T20n1066_001:0128a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)秫馱鉢囉(二合引)謨那　娑頗(二合引)囉次入捨無量心三摩地智。",
        "from": "T20n1066_001:0128b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以平等心遍緣。",
        "from": "T20n1066_001:0128b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道四生一切有情。",
        "from": "T20n1066_001:0128b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆離我所離蘊界。",
        "from": "T20n1066_001:0128b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及離能取所取於法平等。",
        "from": "T20n1066_001:0128b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心本不生性相空故。",
        "from": "T20n1066_001:0128b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我修三密功德力故。",
        "from": "T20n1066_001:0128b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切有情。",
        "from": "T20n1066_001:0128b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同虛空藏菩薩。",
        "from": "T20n1066_001:0128b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T20n1066_001:0128b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦大捨三摩地真言曰。",
        "from": "T20n1066_001:0128b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵麼護閉羯灑(二合引)娑頗(二合引)囉修真言者。",
        "from": "T20n1066_001:0128b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由習四無量心定誦真言故。",
        "from": "T20n1066_001:0128b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有人天種種魔難業障悉皆滅除。",
        "from": "T20n1066_001:0128b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓集無量福智。",
        "from": "T20n1066_001:0128b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心調柔堪任自在。",
        "from": "T20n1066_001:0128b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結輪壇印。",
        "from": "T20n1066_001:0128b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手各作金剛拳。",
        "from": "T20n1066_001:0128b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力檀慧互鉤結。",
        "from": "T20n1066_001:0128b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印於口誦真言。",
        "from": "T20n1066_001:0128b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成入一切曼拏羅。",
        "from": "T20n1066_001:0128b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次安於頂。",
        "from": "T20n1066_001:0128b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於所建立道場處。",
        "from": "T20n1066_001:0128b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆成大曼拏羅。",
        "from": "T20n1066_001:0128b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如本尊親自建立輪壇。",
        "from": "T20n1066_001:0128b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0128b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合引)作訖囉(二合引)吽[口*弱]吽鑁斛由結此印誦真言加持故。",
        "from": "T20n1066_001:0128b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者設有越法。",
        "from": "T20n1066_001:0128b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誤失三業破三摩耶。",
        "from": "T20n1066_001:0128b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒能除諸過皆得圓滿。",
        "from": "T20n1066_001:0128b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結請本尊印。",
        "from": "T20n1066_001:0128b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內相叉作拳。",
        "from": "T20n1066_001:0128b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左大指入掌。",
        "from": "T20n1066_001:0128b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右大指向身招之。",
        "from": "T20n1066_001:0128b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0128b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿嚕禮迦伊(二合引)呬伊(二合引)呬娑嚩(二合引)賀由此真言印加持故。",
        "from": "T20n1066_001:0128b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊菩薩不越本誓。",
        "from": "T20n1066_001:0128b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將諸聖眾來赴道場。",
        "from": "T20n1066_001:0128b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持修行者速滿本願。",
        "from": "T20n1066_001:0128b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結馬首明王印辟除結界。",
        "from": "T20n1066_001:0128b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌。",
        "from": "T20n1066_001:0128b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二頭指無名指。",
        "from": "T20n1066_001:0128b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於掌內甲相背。",
        "from": "T20n1066_001:0128b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪開二大指即成。",
        "from": "T20n1066_001:0128b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印左轉三匝。",
        "from": "T20n1066_001:0128b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想辟除諸作障者。",
        "from": "T20n1066_001:0128b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔鬼神毘那夜迦退散馳走。",
        "from": "T20n1066_001:0128b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印右旋三匝及揮上下。",
        "from": "T20n1066_001:0128b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成堅固大界。",
        "from": "T20n1066_001:0128c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0128c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)阿蜜栗(二合引)覩捺婆(二合引)嚩吽泮吒娑嚩(二合)賀次獻閼伽香水印。",
        "from": "T20n1066_001:0128c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手棒閼伽器。",
        "from": "T20n1066_001:0128c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿盛香水汎以時花。",
        "from": "T20n1066_001:0128c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當額奉獻。",
        "from": "T20n1066_001:0128c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0128c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麼娑麼(入聲)娑嚩(二合)賀(引)由獻閼伽香水供養。",
        "from": "T20n1066_001:0128c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令修行者三業清淨。",
        "from": "T20n1066_001:0128c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洗除一切煩惱罪垢。",
        "from": "T20n1066_001:0128c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從勝解行地至十地及如來地。",
        "from": "T20n1066_001:0128c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當證如是地波羅蜜時。",
        "from": "T20n1066_001:0128c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切如來與甘露法水灌首。",
        "from": "T20n1066_001:0128c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結獻座印。",
        "from": "T20n1066_001:0128c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手蓮華合掌。",
        "from": "T20n1066_001:0128c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒開二無名指。",
        "from": "T20n1066_001:0128c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭屈如開敷蓮華形。",
        "from": "T20n1066_001:0128c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0128c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)迦摩攞娑嚩(二合引)賀",
        "from": "T20n1066_001:0128c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此真言印加持故。",
        "from": "T20n1066_001:0128c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊聖眾真實受持蓮華寶座而坐。",
        "from": "T20n1066_001:0128c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結普供養印。",
        "from": "T20n1066_001:0128c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌微交。",
        "from": "T20n1066_001:0128c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右押左置印心上。",
        "from": "T20n1066_001:0128c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言五遍。",
        "from": "T20n1066_001:0128c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從印流出種種供養雲海。",
        "from": "T20n1066_001:0128c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香華鬘燒香飲食。",
        "from": "T20n1066_001:0128c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈明賢瓶天妙技樂。",
        "from": "T20n1066_001:0128c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普遍供養諸佛菩薩本尊聖眾。",
        "from": "T20n1066_001:0128c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0128c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩(上聲)莫(入聲)薩嚩怛他(引)孽帝毘喻(二合引一)尾濕嚩(二合引)母契毘藥(二合二)薩嚩他(三)欠(四)嗢娜誐(二合)帝娑頗(二合)囉呬[牟*含](五)誐誐曩劍(六)娑嚩(二合引)賀由此真言印加持故。",
        "from": "T20n1066_001:0128c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩本尊聖眾。",
        "from": "T20n1066_001:0128c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆獲真實廣大供養。",
        "from": "T20n1066_001:0128c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法爾成故。",
        "from": "T20n1066_001:0128c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦讚歎。",
        "from": "T20n1066_001:0128c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦麼攞目佉(一)迦麼攞路佐曩(二)迦麼攞薩曩(三)迦麼攞賀娑哆(四)迦麼攞婆母[寧*頁](五)迦麼攞迦麼攞三婆嚩(六)娑迦攞麼攞乞叉(二合)攞(七)曩曩謨娑覩(二合)帝(八)　次結本尊心密印　　順教相應為念誦　諦觀本尊身相好　　普放無量大光明　所有受苦眾生類　　蒙光照觸皆安樂　誦本真言七遍已　　頂上散印如垂帶心印兩手合掌虛掌內。",
        "from": "T20n1066_001:0128c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合腕二頭指來去。",
        "from": "T20n1066_001:0129a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖千手千眼觀世音自在菩薩摩訶薩廣大圓滿無礙大悲心陀羅尼真言如文。",
        "from": "T20n1066_001:0129a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次取數珠捧持頂戴加持七遍。",
        "from": "T20n1066_001:0129a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0129a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾路左曩麼攞娑嚩(二合)賀",
        "from": "T20n1066_001:0129a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以千轉真言加持七遍。",
        "from": "T20n1066_001:0129a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1066_001:0129a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉(二合)麌呬野(二合)惹跛三麼曳吽加持已即發是願。",
        "from": "T20n1066_001:0129a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我及一切有情。",
        "from": "T20n1066_001:0129a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求世間出世間殊勝大願速得成就。",
        "from": "T20n1066_001:0129a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手持珠當心。",
        "from": "T20n1066_001:0129a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言一遍。",
        "from": "T20n1066_001:0129a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與末後字聲移移一珠。",
        "from": "T20n1066_001:0129a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不緩不急不高不下。",
        "from": "T20n1066_001:0129a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱呼真言字令一一分明。",
        "from": "T20n1066_001:0129a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作金剛誦。",
        "from": "T20n1066_001:0129a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌端微動脣齒合。",
        "from": "T20n1066_001:0129a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸散亂。",
        "from": "T20n1066_001:0129a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心專注本尊勿緣異相。",
        "from": "T20n1066_001:0129a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或千或百常定其數。",
        "from": "T20n1066_001:0129a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦終畢捧珠頂禮志誠發願。",
        "from": "T20n1066_001:0129a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安珠本處復結本尊心密印念誦。",
        "from": "T20n1066_001:0129a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散印如前。",
        "from": "T20n1066_001:0129a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　讚歎供養倍慇懃　　再奉閼伽稱本願　復以馬首明王印　　三轉真言成解界　如前請尊降入印　　大指外撥成奉送真言曰。",
        "from": "T20n1066_001:0129a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿嚕力迦誐[王*荖]誐[王*荖]娑嚩(二合引)賀　行者奉送聖眾已　　復結定印起慈悲　三部加持被甲冑　　禮畢辭退任經行　如是依法修行者　　速集福智獲神通　現世得入歡喜地　　後十六生成正覺大悲心陀羅尼修行念誦略儀",
        "from": "T20n1066_001:0129a27_0",
        "context_with_next_sentence": false
    }
]