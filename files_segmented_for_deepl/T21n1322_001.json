[
    {
        "source_sentence": "新集浴像儀軌一卷",
        "from": "T21n1322_001:0488b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧琳述",
        "from": "T21n1322_001:0488b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西國五印度僧眾住持稍加嚴麗。",
        "from": "T21n1322_001:0488b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或居伽藍寺宇蘭若僧園。",
        "from": "T21n1322_001:0488b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日浴像焚香採眾名華。",
        "from": "T21n1322_001:0488b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布散供養禮拜讚佛。",
        "from": "T21n1322_001:0488b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠恭敬旋遶日日。",
        "from": "T21n1322_001:0488b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是精勤畢命為期無替。",
        "from": "T21n1322_001:0488b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日清晨若不修此供養誓不自食。",
        "from": "T21n1322_001:0488b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近諸國共同無有不作之處。",
        "from": "T21n1322_001:0488c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是眾僧修持常敬奉者也。",
        "from": "T21n1322_001:0488c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像唯除土木彩畫不可浴之。",
        "from": "T21n1322_001:0488c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是金銀寶玉銅鑞鍮石如是等像悉堪常浴。",
        "from": "T21n1322_001:0488c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡擬明旦所用浴像香水。",
        "from": "T21n1322_001:0488c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今夕各別浸香細擣絹包經宵水浸。",
        "from": "T21n1322_001:0488c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是諸香皆堪浴像。",
        "from": "T21n1322_001:0488c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一味香水各別一瓶。",
        "from": "T21n1322_001:0488c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不以多香和雜一處。",
        "from": "T21n1322_001:0488c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其瓶可用不受觸者為佳。",
        "from": "T21n1322_001:0488c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂金銀諸寶鐵銅鉛鑞白淨瓷瓶無破損者是也。",
        "from": "T21n1322_001:0488c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆須磨洗令其光淨。",
        "from": "T21n1322_001:0488c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上題香水名號次第輪用。",
        "from": "T21n1322_001:0488c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如貧無者可取未曾經用新淨石瓦木瓶以充其事。",
        "from": "T21n1322_001:0488c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不得雜用即成穢觸。",
        "from": "T21n1322_001:0488c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受得用盛浴像已了香水。",
        "from": "T21n1322_001:0488c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行此法者於淨觸行護威儀。",
        "from": "T21n1322_001:0488c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最須精細作意。",
        "from": "T21n1322_001:0488c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸供養器物準此應知。",
        "from": "T21n1322_001:0488c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至灌浴之時灑掃堂殿。",
        "from": "T21n1322_001:0488c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於寬淨之處以淨牛糞塗一大壇徑可一丈。",
        "from": "T21n1322_001:0488c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置一宣臺於壇中。",
        "from": "T21n1322_001:0488c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上安一大器物。",
        "from": "T21n1322_001:0488c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中施一臺子上安尊像傍置一床。",
        "from": "T21n1322_001:0488c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "油單覆上諸香水瓶次第行列。",
        "from": "T21n1322_001:0488c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五種法供養物。",
        "from": "T21n1322_001:0488c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百索長線新淨軟帛墼等物羅列於上。",
        "from": "T21n1322_001:0488c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾既集已。",
        "from": "T21n1322_001:0488c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共請明法阿闍梨。",
        "from": "T21n1322_001:0488c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或舉眾中最尊上座。",
        "from": "T21n1322_001:0488c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾稱誦浴像經中啟白發願大乘妙偈。",
        "from": "T21n1322_001:0488c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句句眾人普皆隨誦偈曰。",
        "from": "T21n1322_001:0488c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我今灌沐諸如來　　淨智功德莊嚴聚　願彼五濁群生類　　速證如來淨法身　戒定慧解知見香　　遍十方剎常芬馥　願彼香煙亦如是　　無量無邊作佛事　亦願三途苦輪息　　普令除熱得清涼　皆發無上菩提心　　亦出愛河登彼岸又令一人手執香爐虔恭[跍*月]跪。",
        "from": "T21n1322_001:0488c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵音稱誦三歸依讚。",
        "from": "T21n1322_001:0488c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每句眾人作禮一拜。",
        "from": "T21n1322_001:0488c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚曰。",
        "from": "T21n1322_001:0488c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨母馱(引)野虞囉吠(引一)",
        "from": "T21n1322_001:0489a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨達麼(鼻音引)野多(去)以寧(二禮)娜莫僧(去)伽(去引)野摩賀帝(三禮)底哩(二合)毘喻(二合引)比娑(去)多(上)單娜莫(四禮)又令二人吹螺二人誦讚。",
        "from": "T21n1322_001:0489a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種雅樂絲竹絃歌一時俱作。",
        "from": "T21n1322_001:0489a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨親捧水瓶灌沐佛像。",
        "from": "T21n1322_001:0489a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取彼長線一頭繫瓶垂下。",
        "from": "T21n1322_001:0489a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾中人人捧線合掌當心。",
        "from": "T21n1322_001:0489a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專注虔誠稱念諸佛。",
        "from": "T21n1322_001:0489a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有不及捧其線者。",
        "from": "T21n1322_001:0489a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可取執前人身長衣。",
        "from": "T21n1322_001:0489a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意如各各躬親自浴佛像之像也。",
        "from": "T21n1322_001:0489a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至香水瓶次第傾盡一遍。",
        "from": "T21n1322_001:0489a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即須替換。",
        "from": "T21n1322_001:0489a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴了佛像更安。",
        "from": "T21n1322_001:0489a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未浴遍者。",
        "from": "T21n1322_001:0489a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又更各添本類香水如前灌沐。",
        "from": "T21n1322_001:0489a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其吹螺誦讚及以樂音直至浴遍。",
        "from": "T21n1322_001:0489a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有尊像方暫停息。",
        "from": "T21n1322_001:0489a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既灌洗了。",
        "from": "T21n1322_001:0489a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便以淨帛揩拭令乾。",
        "from": "T21n1322_001:0489a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安於床上依位行列。",
        "from": "T21n1322_001:0489a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取塗香人人各以無名指頭搵取翹指當心。",
        "from": "T21n1322_001:0489a14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨稱誦獻塗香真言。",
        "from": "T21n1322_001:0489a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句句眾人齊聲誦。",
        "from": "T21n1322_001:0489a16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至末句。",
        "from": "T21n1322_001:0489a16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時向佛遙彈奉獻作一拜。",
        "from": "T21n1322_001:0489a17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻塗香真言曰。",
        "from": "T21n1322_001:0489a17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗(去引)誐多(一)巘馱(引)布惹(引二)謎伽(去)娑(上)母捺囉(二合三)娑頗(二合)羅拏(鼻去引四)三摩(鼻)曳(平)吽(引)又取華盤。",
        "from": "T21n1322_001:0489a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者與眾人。",
        "from": "T21n1322_001:0489a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各捧一華如前齊誦獻華真言。",
        "from": "T21n1322_001:0489a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向佛遙散奉華真言曰。",
        "from": "T21n1322_001:0489a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗(引去)誐多(一)補澁跛(二合)布惹(二)謎伽(去)三(去)母捺囉(二合三)娑頗(二合)囉拏三(去)麼(鼻)曳(平)吽(引)阿闍梨次執香鑪。",
        "from": "T21n1322_001:0489a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其左右及以眾人互執身衣。",
        "from": "T21n1322_001:0489a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊誦焚香真言普心奉獻。",
        "from": "T21n1322_001:0489a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1322_001:0489a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗(引去)誐多(一)度(引)波布(引)惹(引二)謎伽(去)三母捺囉(三合)娑頗(二合)囉拏(鼻)三(去)麼(鼻)曳(平)吽(引)阿闍梨又捧甜脆餅盤。",
        "from": "T21n1322_001:0489a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前稱誦獻食真言。",
        "from": "T21n1322_001:0489b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠心奉獻。",
        "from": "T21n1322_001:0489b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1322_001:0489b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗(去引)誐多(一)沫(莫可切)里布(引)惹(引二)謎伽(去)三(去)母捺囉(二合)娑頗(二合)囉拏(鼻)三(去)麼曳(平)吽(引)次捧燭臺誦奉燈真言一遍真言曰。",
        "from": "T21n1322_001:0489b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩怛佗(去引)誐多(一)儞(泥一切)比野(二合)布惹(引)(二)謎(引)伽(去)三(去)母捺囉(二合)娑頗(二合)羅拏(鼻)三(去)麼曳(平)吽(引)又令誦讚人人。",
        "from": "T21n1322_001:0489b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執香爐高聲誦浴像妙讚。",
        "from": "T21n1322_001:0489b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚曰(其文廣不能具載)并誦五讚(文多故不載)。",
        "from": "T21n1322_001:0489b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各虔跪一偈一禮。",
        "from": "T21n1322_001:0489b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌浴供養既已周備。",
        "from": "T21n1322_001:0489b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨取彼浴佛香水。",
        "from": "T21n1322_001:0489b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瀝自頂上及灑大眾人人頭上。",
        "from": "T21n1322_001:0489b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是洗浴眾聖萬德莊嚴吉祥福水。",
        "from": "T21n1322_001:0489b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霑灑身上并飲少多。",
        "from": "T21n1322_001:0489b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令身中煩惱消薄。",
        "from": "T21n1322_001:0489b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸次成就無上菩提。",
        "from": "T21n1322_001:0489b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾一時虔誠作禮。",
        "from": "T21n1322_001:0489b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然更吹螺并誦行願吉祥等讚。",
        "from": "T21n1322_001:0489b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "音聲絲竹引眾先行。",
        "from": "T21n1322_001:0489b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨日左轉尊卑倫次旋行道三匝七匝。",
        "from": "T21n1322_001:0489b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所宜各誦大乘經中讚佛妙偈。",
        "from": "T21n1322_001:0489b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法事既畢禮拜辭佛。",
        "from": "T21n1322_001:0489b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人擎一尊送本處。",
        "from": "T21n1322_001:0489b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則西方浴像常法。",
        "from": "T21n1322_001:0489b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後眾僧上堂方受其食。",
        "from": "T21n1322_001:0489b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼悲哉此方寂無知者。",
        "from": "T21n1322_001:0489b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且佛像終身不曾一浴。",
        "from": "T21n1322_001:0489b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煙熏塵坌烏鼠穢污。",
        "from": "T21n1322_001:0489b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉國皆然無能曉悟。",
        "from": "T21n1322_001:0489b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有浴者祖習愚情。",
        "from": "T21n1322_001:0489b25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別造一裸體尊容立於水器之內。",
        "from": "T21n1322_001:0489b25_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以小扚洗。",
        "from": "T21n1322_001:0489b26_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須慢心獻弄。",
        "from": "T21n1322_001:0489b26_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊無敬重之意反招輕忽之罪。",
        "from": "T21n1322_001:0489b27_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀哉不知敬田福之大也。",
        "from": "T21n1322_001:0489b27_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高鑒君子賢明哲人。",
        "from": "T21n1322_001:0489b28_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏罪求福之儔。",
        "from": "T21n1322_001:0489b28_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特宜存意此法。",
        "from": "T21n1322_001:0489b29_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不能每日浴者。",
        "from": "T21n1322_001:0489b29_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可每月為之。",
        "from": "T21n1322_001:0489c01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲殊勝福利如浴像經中如來金口所說。",
        "from": "T21n1322_001:0489c01_33",
        "context_with_next_sentence": false
    }
]