[
    {
        "source_sentence": "居士傳三十三",
        "from": "X88n1646_033:0242b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王虗中傳",
        "from": "X88n1646_033:0242b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王虗中。",
        "from": "X88n1646_033:0242b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名日休。",
        "from": "X88n1646_033:0242b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廬州人也。",
        "from": "X88n1646_033:0242b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋高宗朝舉國學進士。",
        "from": "X88n1646_033:0242b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄官不就。",
        "from": "X88n1646_033:0242b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著書名龍舒淨土文。",
        "from": "X88n1646_033:0242b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自王公土大夫下至屠丐僮奴皂隷優妓之屬。",
        "from": "X88n1646_033:0242b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸以淨土法門勸引歸依。",
        "from": "X88n1646_033:0242b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文淺說曲喻。",
        "from": "X88n1646_033:0242b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至詳至懇。",
        "from": "X88n1646_033:0242b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若父兄之教子弟然。",
        "from": "X88n1646_033:0242b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同時歷陽張安國為之序曰。",
        "from": "X88n1646_033:0242b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀如來以大願力。",
        "from": "X88n1646_033:0242b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受群品。",
        "from": "X88n1646_033:0242b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫念甚簡。",
        "from": "X88n1646_033:0242b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證果甚速。",
        "from": "X88n1646_033:0242b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或者疑之。",
        "from": "X88n1646_033:0242b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予甞為之言。",
        "from": "X88n1646_033:0242b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛即汝性是。",
        "from": "X88n1646_033:0242b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極樂國土即汝心是。",
        "from": "X88n1646_033:0242b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生背覺合塵淪於七趣。",
        "from": "X88n1646_033:0242b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立我與佛。",
        "from": "X88n1646_033:0242b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天地懸隔。",
        "from": "X88n1646_033:0242b19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為是故。",
        "from": "X88n1646_033:0242b19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲方便。",
        "from": "X88n1646_033:0242b19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現諸無量如幻三昧。",
        "from": "X88n1646_033:0242b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴其國。",
        "from": "X88n1646_033:0242b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備諸華好。",
        "from": "X88n1646_033:0242b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以辯智而為演說。",
        "from": "X88n1646_033:0242b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生歡喜愛樂。",
        "from": "X88n1646_033:0242b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日用中能發一念。",
        "from": "X88n1646_033:0242b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念彼如來欲生其國。",
        "from": "X88n1646_033:0242b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此一念清淨堅固。",
        "from": "X88n1646_033:0242b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還性所有與佛無異。",
        "from": "X88n1646_033:0242b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當是念時不起於坐。",
        "from": "X88n1646_033:0242b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛極樂國土悉皆現前。",
        "from": "X88n1646_033:0242b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是修習乃至純熟。",
        "from": "X88n1646_033:0242b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幻身壞時此性不壞。",
        "from": "X88n1646_033:0242b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金蓮華臺由性種生。",
        "from": "X88n1646_033:0242c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往生其中如歸吾廬。",
        "from": "X88n1646_033:0242c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩即我眷屬。",
        "from": "X88n1646_033:0242c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性無異故。",
        "from": "X88n1646_033:0242c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自相親愛。",
        "from": "X88n1646_033:0242c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "友人龍舒王虗中端靜簡潔博通群經。",
        "from": "X88n1646_033:0242c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訓傳六經諸子數十萬言。",
        "from": "X88n1646_033:0242c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一旦捐之。",
        "from": "X88n1646_033:0242c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自是精進惟佛是念。",
        "from": "X88n1646_033:0242c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年且六十。",
        "from": "X88n1646_033:0242c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布衣蔬茹。",
        "from": "X88n1646_033:0242c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重趼千里以是教人。",
        "from": "X88n1646_033:0242c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風雨寒暑弗遑暇恤。",
        "from": "X88n1646_033:0242c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閒居日課千拜。",
        "from": "X88n1646_033:0242c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜分乃寢。",
        "from": "X88n1646_033:0242c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面目奕奕有光。",
        "from": "X88n1646_033:0242c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "望之者信其為有道之士也。",
        "from": "X88n1646_033:0242c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹興辛巳秋過家。",
        "from": "X88n1646_033:0242c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君於宣城留兩月。",
        "from": "X88n1646_033:0242c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始見其淨土文。",
        "from": "X88n1646_033:0242c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡修習法門與感驗章著。",
        "from": "X88n1646_033:0242c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有顛末。",
        "from": "X88n1646_033:0242c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故喜為之序云。",
        "from": "X88n1646_033:0242c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安國名孝祥。",
        "from": "X88n1646_033:0242c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "官中書舍人。",
        "from": "X88n1646_033:0242c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞問法於大慧云。",
        "from": "X88n1646_033:0242c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗中每晨起禮佛祝願言。",
        "from": "X88n1646_033:0242c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子日休。",
        "from": "X88n1646_033:0242c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹為盡虗空界一切眾生然香敬禮。",
        "from": "X88n1646_033:0242c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡虗空界一切諸佛。",
        "from": "X88n1646_033:0242c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切正法。",
        "from": "X88n1646_033:0242c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸大菩薩緣覺聲聞聖眾。",
        "from": "X88n1646_033:0242c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞成就一切善願。",
        "from": "X88n1646_033:0242c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濟度無量無邊眾生。",
        "from": "X88n1646_033:0242c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時一剎那間。",
        "from": "X88n1646_033:0242c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見阿彌陀佛證無生忍。",
        "from": "X88n1646_033:0242c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了六神通。",
        "from": "X88n1646_033:0242c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出此間。",
        "from": "X88n1646_033:0242c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一歲即來此間教化眾生。",
        "from": "X88n1646_033:0242c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸漸變此南閻浮提盡娑婆世界。",
        "from": "X88n1646_033:0242c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至十方無量世界。",
        "from": "X88n1646_033:0242c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為清淨極樂世界。",
        "from": "X88n1646_033:0242c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又祝云。",
        "from": "X88n1646_033:0242c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子日休。",
        "from": "X88n1646_033:0242c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為此南閻浮提無巨無細一切眾生。",
        "from": "X88n1646_033:0242c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮諸天天帝日月后土一切靈祇。",
        "from": "X88n1646_033:0242c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為此等眾生感謝覆載照臨生養衛護之恩。",
        "from": "X88n1646_033:0242c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹為此等眾生念南無釋迦牟尼佛一百八徧。",
        "from": "X88n1646_033:0242c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種無上善根。",
        "from": "X88n1646_033:0242c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念南無阿彌陀佛一百八徧。",
        "from": "X88n1646_033:0242c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以結無上善緣。",
        "from": "X88n1646_033:0242c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願此等眾生常沐洪恩歡喜相向。",
        "from": "X88n1646_033:0242c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相爭相殺。",
        "from": "X88n1646_033:0242c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相食相陵。",
        "from": "X88n1646_033:0242c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進修佛法脫離苦海。",
        "from": "X88n1646_033:0242c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即變此南閻浮提為極樂世界。",
        "from": "X88n1646_033:0242c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又祝云。",
        "from": "X88n1646_033:0242c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子日休。",
        "from": "X88n1646_033:0242c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹為盡虗空界一切眾生敬禮西方極樂世界阿彌陀佛．觀世音菩薩．大勢至菩薩．聲聞諸上善人。",
        "from": "X88n1646_033:0242c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰惟大慈大悲。",
        "from": "X88n1646_033:0243a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憫念眾生沉淪苦海無有出期。",
        "from": "X88n1646_033:0243a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特展威神遞相勸勉。",
        "from": "X88n1646_033:0243a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分身於此震旦國中教化眾生。",
        "from": "X88n1646_033:0243a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使不相爭相殺。",
        "from": "X88n1646_033:0243a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相食相陵。",
        "from": "X88n1646_033:0243a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易世澆漓共躋仁壽。",
        "from": "X88n1646_033:0243a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及於此南閻浮提盡此娑婆世界及十方濁惡世界。",
        "from": "X88n1646_033:0243a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身為國王大臣百僚庶尹教化眾生同修佛道脫離苦海。",
        "from": "X88n1646_033:0243a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即變吾國以至十方濁惡世界皆為清淨極樂世界。",
        "from": "X88n1646_033:0243a06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又祝云。",
        "from": "X88n1646_033:0243a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子日休。",
        "from": "X88n1646_033:0243a07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身在世網宿業深重。",
        "from": "X88n1646_033:0243a07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願為平昔所殺眾生。",
        "from": "X88n1646_033:0243a08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所食眾生。",
        "from": "X88n1646_033:0243a08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及南閻浮提所殺所食一切眾生。",
        "from": "X88n1646_033:0243a08_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日誦西方極樂世界三十六萬億一十一萬九千五百同名同號阿彌陀佛一百二十徧。",
        "from": "X88n1646_033:0243a09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰惟如來大慈大悲。",
        "from": "X88n1646_033:0243a11_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以日休所誦如來名號一聲。",
        "from": "X88n1646_033:0243a11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一如來度一眾生。",
        "from": "X88n1646_033:0243a12_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡其所誦之數。",
        "from": "X88n1646_033:0243a12_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度一切眾生同生極樂世界。",
        "from": "X88n1646_033:0243a12_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其詳載淨土文中。",
        "from": "X88n1646_033:0243a13_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗中甞以無量壽經稱讚西方義蘊深廣。",
        "from": "X88n1646_033:0243a13_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而自漢迄宋譯文晦塞罕中倫節。",
        "from": "X88n1646_033:0243a14_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致我佛說經之旨不白。",
        "from": "X88n1646_033:0243a15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃禱於觀世音。",
        "from": "X88n1646_033:0243a15_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會四本而譯之。",
        "from": "X88n1646_033:0243a15_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三年乃成。",
        "from": "X88n1646_033:0243a16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釐為五十六分。",
        "from": "X88n1646_033:0243a16_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文辭爾雅。",
        "from": "X88n1646_033:0243a16_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "條理燦然。",
        "from": "X88n1646_033:0243a16_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂得大行於世。",
        "from": "X88n1646_033:0243a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾道中廬陵李彥弼有疾垂死。",
        "from": "X88n1646_033:0243a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢一人自稱龍舒居士謂曰。",
        "from": "X88n1646_033:0243a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝起飲白粥。",
        "from": "X88n1646_033:0243a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾當瘳。",
        "from": "X88n1646_033:0243a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且汝尚憶闕仲雅教汝修行捷徑否。",
        "from": "X88n1646_033:0243a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彥弼曰。",
        "from": "X88n1646_033:0243a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日念佛不輟。",
        "from": "X88n1646_033:0243a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既覺索粥飲之立愈。",
        "from": "X88n1646_033:0243a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彥弼初未識虗中。",
        "from": "X88n1646_033:0243a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而見其畵像與夢合。",
        "from": "X88n1646_033:0243a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使諸子往受學焉。",
        "from": "X88n1646_033:0243a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗中將卒前三日。",
        "from": "X88n1646_033:0243a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧別道友。",
        "from": "X88n1646_033:0243a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勗以精修淨業云。",
        "from": "X88n1646_033:0243a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將有行。",
        "from": "X88n1646_033:0243a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復相見。",
        "from": "X88n1646_033:0243a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期。",
        "from": "X88n1646_033:0243a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與生徒講書畢。",
        "from": "X88n1646_033:0243a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮誦如常時。",
        "from": "X88n1646_033:0243a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至三更。",
        "from": "X88n1646_033:0243a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽厲聲稱阿彌陀佛數聲。",
        "from": "X88n1646_033:0243a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱言佛來迎我。",
        "from": "X88n1646_033:0243a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屹然立化。",
        "from": "X88n1646_033:0243a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彥弼聞而感之。",
        "from": "X88n1646_033:0243a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為刻虗中像并述其事傳遠近。",
        "from": "X88n1646_033:0243a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自是廬陵人多供事之。",
        "from": "X88n1646_033:0243b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸祐中呂元益重刻淨土文。",
        "from": "X88n1646_033:0243b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至祝願篇。",
        "from": "X88n1646_033:0243b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "版中得舍利三顆。",
        "from": "X88n1646_033:0243b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其叔父師說載其事於篇首云(樂邦文類．龍舒淨土文)。",
        "from": "X88n1646_033:0243b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_033:0243b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予讀虗中所著書。",
        "from": "X88n1646_033:0243b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀其願力之宏。",
        "from": "X88n1646_033:0243b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修持之密。",
        "from": "X88n1646_033:0243b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未甞不惻然內愧憤發也。",
        "from": "X88n1646_033:0243b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益國公周必大贊其像曰。",
        "from": "X88n1646_033:0243b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇皇然而無求。",
        "from": "X88n1646_033:0243b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惕惕然而無憂。",
        "from": "X88n1646_033:0243b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閔淳風之將墜。",
        "from": "X88n1646_033:0243b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攬眾善以同流。",
        "from": "X88n1646_033:0243b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導之以仁義之源。",
        "from": "X88n1646_033:0243b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誘之以寂滅之樂。",
        "from": "X88n1646_033:0243b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世知其有作。",
        "from": "X88n1646_033:0243b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而莫識其無為。",
        "from": "X88n1646_033:0243b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故中道奄然而示人以真覺。",
        "from": "X88n1646_033:0243b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其真知虗中者乎。",
        "from": "X88n1646_033:0243b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_033:0243b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學道者如牛毛。",
        "from": "X88n1646_033:0243b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得道者如麟角。",
        "from": "X88n1646_033:0243b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究其病根。",
        "from": "X88n1646_033:0243b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只是立我與佛耳。",
        "from": "X88n1646_033:0243b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立我與佛。",
        "from": "X88n1646_033:0243b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我是根。",
        "from": "X88n1646_033:0243b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛是塵。",
        "from": "X88n1646_033:0243b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根塵熾然。",
        "from": "X88n1646_033:0243b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何劫了當耶。",
        "from": "X88n1646_033:0243b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪門一棒打殺根塵。",
        "from": "X88n1646_033:0243b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提脫之捷徑也。",
        "from": "X88n1646_033:0243b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土轉我作佛。",
        "from": "X88n1646_033:0243b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根即是性。",
        "from": "X88n1646_033:0243b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵即是心。",
        "from": "X88n1646_033:0243b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變易",
        "from": "X88n1646_033:0243b13_15",
        "context_with_next_sentence": false
    }
]