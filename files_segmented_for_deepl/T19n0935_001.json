[
    {
        "source_sentence": "極樂願文",
        "from": "T19n0935_001:0080b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清字經館行走福佑寺達喇嘛",
        "from": "T19n0935_001:0080b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘠卜楚薩木丹達爾吉譯",
        "from": "T19n0935_001:0080b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　希有為眾施行無盡德",
        "from": "T19n0935_001:0080b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　略念能令死主難遠離",
        "from": "T19n0935_001:0080b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　恒觀有情如憶獨子者",
        "from": "T19n0935_001:0080b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世尊無量壽佛前敬禮",
        "from": "T19n0935_001:0080c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　釋迦牟尼歷次中　　善所稱讚之勝境　往生極樂願文詞　　由慈悲故盡力說　善惡被重無明障　　天人命為嗔械殘　愛[糸*(索-糸+系)]縛在輪迴獄　　業水飄進三有海　病老苦浪多推蕩　　摧入死主海獸口　常為不欲苦擔壓　　無依玷辱之號哀　願與心為證見者　　導引困苦獨彌陀　觀音大勢至菩薩　　並眷屬前謹禱祈　為我等故與多劫　　曾發勝誓願莫忘　如妙翅尊行虛空　　以慈神力而降臨伏願自他三世。",
        "from": "T19n0935_001:0080c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所緣二資糧海。",
        "from": "T19n0935_001:0080c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普合一力為倚。",
        "from": "T19n0935_001:0080c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等臨命終時。",
        "from": "T19n0935_001:0080c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親見接引彌陀。",
        "from": "T19n0935_001:0080c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大菩薩。",
        "from": "T19n0935_001:0080c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並諸眷屬圍繞現前。",
        "from": "T19n0935_001:0080c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時於佛眷屬生極專之至誠。",
        "from": "T19n0935_001:0080c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無斷命之苦。",
        "from": "T19n0935_001:0080c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍不失其信誠。",
        "from": "T19n0935_001:0080c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並所見境界之念。",
        "from": "T19n0935_001:0080c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將終之時。",
        "from": "T19n0935_001:0080c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八大佛子。",
        "from": "T19n0935_001:0080c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以神變來至。",
        "from": "T19n0935_001:0080c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指引極樂之路。",
        "from": "T19n0935_001:0080c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教即往極樂勝境。",
        "from": "T19n0935_001:0080c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從寶蓮中。",
        "from": "T19n0935_001:0080c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願生大乘利根之種姓。",
        "from": "T19n0935_001:0080c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將生之時。",
        "from": "T19n0935_001:0080c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切總持及諸禪定。",
        "from": "T19n0935_001:0080c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣道心。",
        "from": "T19n0935_001:0080c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡辯才等。",
        "from": "T19n0935_001:0080c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量諸勝功德。",
        "from": "T19n0935_001:0080c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足而得。",
        "from": "T19n0935_001:0080c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即承無上導師阿彌陀佛。",
        "from": "T19n0935_001:0080c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並十方諸佛菩薩。",
        "from": "T19n0935_001:0080c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆歡喜。",
        "from": "T19n0935_001:0080c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願受大乘之法勅。",
        "from": "T19n0935_001:0080c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼諸法之義。",
        "from": "T19n0935_001:0080c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那閒如理融通。",
        "from": "T19n0935_001:0080c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即乘無礙神變。",
        "from": "T19n0935_001:0080c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至方廣佛剎。",
        "from": "T19n0935_001:0080c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣行菩薩妙行。",
        "from": "T19n0935_001:0080c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願悉圓滿。",
        "from": "T19n0935_001:0080c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已生淨土之時。",
        "from": "T19n0935_001:0080c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起諸勇猛慈悲。",
        "from": "T19n0935_001:0080c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無礙神變。",
        "from": "T19n0935_001:0080c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特至穢土。",
        "from": "T19n0935_001:0080c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸眾生。",
        "from": "T19n0935_001:0080c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各如自緣。",
        "from": "T19n0935_001:0080c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法而教。",
        "from": "T19n0935_001:0080c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願悉安之於諸佛稱讚清淨之道。",
        "from": "T19n0935_001:0080c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普行希有之行。",
        "from": "T19n0935_001:0080c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆速圓滿。",
        "from": "T19n0935_001:0080c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益無邊眾生。",
        "from": "T19n0935_001:0080c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願皆易得佛果。",
        "from": "T19n0935_001:0080c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　願臨命終時　　海會繞彌陀",
        "from": "T19n0935_001:0081a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眼前明顯見　　慈信盈我心",
        "from": "T19n0935_001:0081a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　將見中陰兆　　佛子即指教",
        "from": "T19n0935_001:0081a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　既生淨土已　　來化穢土眾",
        "from": "T19n0935_001:0081a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此勝境。",
        "from": "T19n0935_001:0081a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或未得生。",
        "from": "T19n0935_001:0081a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願生生世世。",
        "from": "T19n0935_001:0081a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常遇佛教。",
        "from": "T19n0935_001:0081a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在諸經論中。",
        "from": "T19n0935_001:0081a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契悟聞思修。",
        "from": "T19n0935_001:0081a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得清淨之身。",
        "from": "T19n0935_001:0081a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得其身。",
        "from": "T19n0935_001:0081a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於高類七德莊嚴。",
        "from": "T19n0935_001:0081a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願不遠離。",
        "from": "T19n0935_001:0081a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是於一切時中。",
        "from": "T19n0935_001:0081a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶念前生。",
        "from": "T19n0935_001:0081a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得宿命智。",
        "from": "T19n0935_001:0081a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世。",
        "from": "T19n0935_001:0081a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡見三有。",
        "from": "T19n0935_001:0081a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆生無益之心。",
        "from": "T19n0935_001:0081a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於解脫功德。",
        "from": "T19n0935_001:0081a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即起奪意之念。",
        "from": "T19n0935_001:0081a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在諸佛律中。",
        "from": "T19n0935_001:0081a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得出家。",
        "from": "T19n0935_001:0081a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既出家之時。",
        "from": "T19n0935_001:0081a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸惡墮。",
        "from": "T19n0935_001:0081a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毫無所染。",
        "from": "T19n0935_001:0081a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓守禁戒。",
        "from": "T19n0935_001:0081a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行至無極門中。",
        "from": "T19n0935_001:0081a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大菩提。",
        "from": "T19n0935_001:0081a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如大比丘阿閦佛。",
        "from": "T19n0935_001:0081a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於世世生生。",
        "from": "T19n0935_001:0081a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在染淨諸法中。",
        "from": "T19n0935_001:0081a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理融通。",
        "from": "T19n0935_001:0081a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓成之道。",
        "from": "T19n0935_001:0081a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法文義。",
        "from": "T19n0935_001:0081a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持不失忘之總持。",
        "from": "T19n0935_001:0081a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願悉豐足而得。",
        "from": "T19n0935_001:0081a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如已所持。",
        "from": "T19n0935_001:0081a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示於他時。",
        "from": "T19n0935_001:0081a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得清淨無礙之辯。",
        "from": "T19n0935_001:0081a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於生生世世。",
        "from": "T19n0935_001:0081a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於楞嚴等諸定。",
        "from": "T19n0935_001:0081a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肉眼等五眼。",
        "from": "T19n0935_001:0081a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神境等六通。",
        "from": "T19n0935_001:0081a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願一切悉得無離。",
        "from": "T19n0935_001:0081a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於生生世世。",
        "from": "T19n0935_001:0081a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自生之力。",
        "from": "T19n0935_001:0081a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分晰一切善惡之道。",
        "from": "T19n0935_001:0081a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得廣大之智慧。",
        "from": "T19n0935_001:0081a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於染淨諸法。",
        "from": "T19n0935_001:0081a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細微差別。",
        "from": "T19n0935_001:0081a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分晰如現。",
        "from": "T19n0935_001:0081a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉無雜濫。",
        "from": "T19n0935_001:0081a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得利明之智慧。",
        "from": "T19n0935_001:0081a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有未悟誤悟疑心之念。",
        "from": "T19n0935_001:0081a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將生之時。",
        "from": "T19n0935_001:0081a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則悉滅無餘。",
        "from": "T19n0935_001:0081a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得速見之智慧。",
        "from": "T19n0935_001:0081a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以他不能測量之妙法文義不費鑽研。",
        "from": "T19n0935_001:0081a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得深密之智慧。",
        "from": "T19n0935_001:0081a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總言洩露智慧之過。",
        "from": "T19n0935_001:0081b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及離智之文義。",
        "from": "T19n0935_001:0081b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能分晰。",
        "from": "T19n0935_001:0081b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從方便正智中修菩提行。",
        "from": "T19n0935_001:0081b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉到彼岸。",
        "from": "T19n0935_001:0081b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如至尊文殊菩薩。",
        "from": "T19n0935_001:0081b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是廣大利明。",
        "from": "T19n0935_001:0081b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速見深密之諸智慧。",
        "from": "T19n0935_001:0081b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉以易得。",
        "from": "T19n0935_001:0081b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣所持。",
        "from": "T19n0935_001:0081b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "折伏邪說。",
        "from": "T19n0935_001:0081b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令智者歡喜。",
        "from": "T19n0935_001:0081b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣佛說諸法中。",
        "from": "T19n0935_001:0081b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能分辨討論纂作。",
        "from": "T19n0935_001:0081b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得智者之到彼岸。",
        "from": "T19n0935_001:0081b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於生生世世。",
        "from": "T19n0935_001:0081b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡執自利為要。",
        "from": "T19n0935_001:0081b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於菩薩廣大行中。",
        "from": "T19n0935_001:0081b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生退回。",
        "from": "T19n0935_001:0081b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆斷滅。",
        "from": "T19n0935_001:0081b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以勇猛心。",
        "from": "T19n0935_001:0081b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更勤利他。",
        "from": "T19n0935_001:0081b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆到彼岸。",
        "from": "T19n0935_001:0081b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從方便菩提中。",
        "from": "T19n0935_001:0081b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行菩薩行。",
        "from": "T19n0935_001:0081b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆至無極。",
        "from": "T19n0935_001:0081b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如勝觀自在菩薩。",
        "from": "T19n0935_001:0081b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於生生世世。",
        "from": "T19n0935_001:0081b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行自他兼利。",
        "from": "T19n0935_001:0081b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧滅諸魔外道。",
        "from": "T19n0935_001:0081b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸敵時。",
        "from": "T19n0935_001:0081b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從方便勇力中。",
        "from": "T19n0935_001:0081b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修菩薩行。",
        "from": "T19n0935_001:0081b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆至究竟。",
        "from": "T19n0935_001:0081b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如祕密主金剛手菩薩。",
        "from": "T19n0935_001:0081b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世。",
        "from": "T19n0935_001:0081b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以棄怠之精進。",
        "from": "T19n0935_001:0081b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓菩薩之妙行自初發心。",
        "from": "T19n0935_001:0081b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至剎那閒。",
        "from": "T19n0935_001:0081b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無怠惰。",
        "from": "T19n0935_001:0081b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而從大精進中。",
        "from": "T19n0935_001:0081b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得勝菩提。",
        "from": "T19n0935_001:0081b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如無等釋迦王佛。",
        "from": "T19n0935_001:0081b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世。",
        "from": "T19n0935_001:0081b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除修道之閒斷。",
        "from": "T19n0935_001:0081b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心之諸病。",
        "from": "T19n0935_001:0081b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時以微題名號。",
        "from": "T19n0935_001:0081b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能息滅身語意之痛愆。",
        "from": "T19n0935_001:0081b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如藥師琉璃光王如來。",
        "from": "T19n0935_001:0081b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於生生世世。",
        "from": "T19n0935_001:0081b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如欲壽終無極。",
        "from": "T19n0935_001:0081b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以微題名號。",
        "from": "T19n0935_001:0081b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能摧滅非時橫夭。",
        "from": "T19n0935_001:0081b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如無量壽佛。",
        "from": "T19n0935_001:0081b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若壽障將至之時。",
        "from": "T19n0935_001:0081b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見救濟無量壽以四業中。",
        "from": "T19n0935_001:0081b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨業現身。",
        "from": "T19n0935_001:0081b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為調伏。",
        "from": "T19n0935_001:0081b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既見身已。",
        "from": "T19n0935_001:0081b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願壽障盡消無餘。",
        "from": "T19n0935_001:0081b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼隨度現身之時。",
        "from": "T19n0935_001:0081b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得識知是無量壽。",
        "from": "T19n0935_001:0081b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生無造作堅固至誠承是力故。",
        "from": "T19n0935_001:0081b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生一切處。",
        "from": "T19n0935_001:0081b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得不離無量壽佛。",
        "from": "T19n0935_001:0081b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親為知識。",
        "from": "T19n0935_001:0081b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於生生世世。",
        "from": "T19n0935_001:0081b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得世出世閒。",
        "from": "T19n0935_001:0081b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸功德之本。",
        "from": "T19n0935_001:0081b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足性相大乘之善知識師。",
        "from": "T19n0935_001:0081c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願喜悅護持。",
        "from": "T19n0935_001:0081c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨持之時。",
        "from": "T19n0935_001:0081c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於善知識師前。",
        "from": "T19n0935_001:0081c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得生無退堅固之信。",
        "from": "T19n0935_001:0081c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願恒使喜悅。",
        "from": "T19n0935_001:0081c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那之閒。",
        "from": "T19n0935_001:0081c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願不令不喜。",
        "from": "T19n0935_001:0081c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善知識師指示。",
        "from": "T19n0935_001:0081c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其諸教。",
        "from": "T19n0935_001:0081c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願無不全受彼所教義。",
        "from": "T19n0935_001:0081c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理融化。",
        "from": "T19n0935_001:0081c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能修習。",
        "from": "T19n0935_001:0081c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願得至究竟。",
        "from": "T19n0935_001:0081c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那之閒。",
        "from": "T19n0935_001:0081c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願不由惡友遣使。",
        "from": "T19n0935_001:0081c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生世世。",
        "from": "T19n0935_001:0081c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於恭信因果。",
        "from": "T19n0935_001:0081c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及厭離心。",
        "from": "T19n0935_001:0081c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提妙心。",
        "from": "T19n0935_001:0081c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並清淨見悉得融通。",
        "from": "T19n0935_001:0081c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行無勉強嘗試之行。",
        "from": "T19n0935_001:0081c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願常不閒斷。",
        "from": "T19n0935_001:0081c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生一切處。",
        "from": "T19n0935_001:0081c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從身語意所修諸善根。",
        "from": "T19n0935_001:0081c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普皆全為利他。",
        "from": "T19n0935_001:0081c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋願成清淨菩提之因矣。",
        "from": "T19n0935_001:0081c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　惟彼世尊妙勝果　　現今我若未證時　願得清淨修道身　　世世憶念恒出家　辯才禪定神通呪　　持無邊諸功德藏　悉得悲智無雙友　　速修菩提至究竟　將見非時壽天相　　無量壽佛身明現　則斷死主之勇猛　　願速得持無死姓　我願世世無量壽　　親為護持大乘師　於佛讚歎道理中　　剎那之閒無退惰　棄舍眾生為自利　　分別之心亦不生　修利他理無蒙昧　　方便智巧厚利他　以我微念尊名號　　消諸侵犯罪業果　轉成豐足安樂因　　直步上乘之階梯　佛子解脫微作兆　　滅盡菩薩行之祟　一切用度皆豐順　　於意微思悉圓成　釋迦彌陀及慈氏　　文殊密主觀世音　善逝眷屬實因緣　　是願不虛速圓成極樂願文竟",
        "from": "T19n0935_001:0081c13_0",
        "context_with_next_sentence": false
    }
]