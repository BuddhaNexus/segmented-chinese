[
    {
        "source_sentence": "奇特最勝金輪佛頂念誦儀軌法",
        "from": "T19n0949_001:0190b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要",
        "from": "T19n0949_001:0190b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫欲修習一字頂輪王法者。",
        "from": "T19n0949_001:0190b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須入大曼荼羅海會。",
        "from": "T19n0949_001:0190b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從師親受灌頂。",
        "from": "T19n0949_001:0190b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既蒙印可方得諮。",
        "from": "T19n0949_001:0190b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學微妙軌則真言教門。",
        "from": "T19n0949_001:0190b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立道場。",
        "from": "T19n0949_001:0190b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一依本部儀式。",
        "from": "T19n0949_001:0190b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫本尊像。",
        "from": "T19n0949_001:0190b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法安置。",
        "from": "T19n0949_001:0190b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲疾成悉地。",
        "from": "T19n0949_001:0190b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須沐浴。",
        "from": "T19n0949_001:0190b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著新淨衣。",
        "from": "T19n0949_001:0190b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出家者。",
        "from": "T19n0949_001:0190b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精持律儀。",
        "from": "T19n0949_001:0190b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得缺犯。",
        "from": "T19n0949_001:0190b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在家者。",
        "from": "T19n0949_001:0190b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應受近住八支淨戒。",
        "from": "T19n0949_001:0190b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當殷重發廣大心。",
        "from": "T19n0949_001:0190b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於阿闍梨所敬仰如佛。",
        "from": "T19n0949_001:0190b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍諸有情起大悲願。",
        "from": "T19n0949_001:0190b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惜身命常生濟度。",
        "from": "T19n0949_001:0190b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令離苦獲大利樂。",
        "from": "T19n0949_001:0190b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道場已。",
        "from": "T19n0949_001:0190b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五輪投地。",
        "from": "T19n0949_001:0190b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠普禮一切如來。",
        "from": "T19n0949_001:0190b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復對本尊。",
        "from": "T19n0949_001:0190c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒沙聖眾以淨三業悔除罪障。",
        "from": "T19n0949_001:0190c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請諸佛轉妙法輪。",
        "from": "T19n0949_001:0190c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜三乘所修福智。",
        "from": "T19n0949_001:0190c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以斯妙善迴向菩提。",
        "from": "T19n0949_001:0190c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界眾生同階佛果。",
        "from": "T19n0949_001:0190c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以塗香塗手。",
        "from": "T19n0949_001:0190c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌如蓮。",
        "from": "T19n0949_001:0190c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察本源。",
        "from": "T19n0949_001:0190c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性清淨。",
        "from": "T19n0949_001:0190c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸客塵之所覆蔽。",
        "from": "T19n0949_001:0190c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此觀已。",
        "from": "T19n0949_001:0190c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心廣布。",
        "from": "T19n0949_001:0190c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我與眾生亦同清淨。",
        "from": "T19n0949_001:0190c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為令清淨故。",
        "from": "T19n0949_001:0190c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此殊勝。",
        "from": "T19n0949_001:0190c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴澡真言。",
        "from": "T19n0949_001:0190c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)薩嚩(二合)婆(去)嚩秫(詩律反)度唅由三誦明故。",
        "from": "T19n0949_001:0190c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意三業乃至遍法界一切悉清淨。",
        "from": "T19n0949_001:0190c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一切諸佛部心三昧耶印。",
        "from": "T19n0949_001:0190c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀十度內叉拳。",
        "from": "T19n0949_001:0190c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智二度並申合。",
        "from": "T19n0949_001:0190c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觀諸佛滿虛空。",
        "from": "T19n0949_001:0190c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三誦真言頂上散。",
        "from": "T19n0949_001:0190c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛部心真言曰。",
        "from": "T19n0949_001:0190c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)爾曩爾迦(半字呼)娑嚩(二合)賀(引)由結前印誦真言故。",
        "from": "T19n0949_001:0190c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛一切如來。",
        "from": "T19n0949_001:0190c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承本誓願。",
        "from": "T19n0949_001:0190c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉運集。",
        "from": "T19n0949_001:0190c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿虛空。",
        "from": "T19n0949_001:0190c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒光照燭。",
        "from": "T19n0949_001:0190c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行人。",
        "from": "T19n0949_001:0190c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障惱。",
        "from": "T19n0949_001:0190c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業清淨。",
        "from": "T19n0949_001:0190c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證菩提。",
        "from": "T19n0949_001:0190c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一切諸菩薩蓮華部心三昧耶印。",
        "from": "T19n0949_001:0190c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　准前結佛部心印　　屈左智度入掌中　禪度直竪或三招　　運心憶念觀自在　一切微塵菩薩眾　　持蓮眷屬滿空中　至心三遍誦真言　　方以印於頂右散蓮華部心真言曰。",
        "from": "T19n0949_001:0190c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿(去)嚕力迦(半字呼)娑嚩(二合引)賀由結前印誦真言故。",
        "from": "T19n0949_001:0191a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩承本誓願。",
        "from": "T19n0949_001:0191a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將諸蓮華眾無量菩薩。",
        "from": "T19n0949_001:0191a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿虛空。",
        "from": "T19n0949_001:0191a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉運集。",
        "from": "T19n0949_001:0191a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明。",
        "from": "T19n0949_001:0191a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行者。",
        "from": "T19n0949_001:0191a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得清淨。",
        "from": "T19n0949_001:0191a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求滿足。",
        "from": "T19n0949_001:0191a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸障難。",
        "from": "T19n0949_001:0191a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證菩提。",
        "from": "T19n0949_001:0191a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一切金剛部心三昧耶印。",
        "from": "T19n0949_001:0191a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前復結佛部心印。",
        "from": "T19n0949_001:0191a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　屈右禪度入掌中　　智度直竪或三招　塵沙眷屬共圍繞　　威光赫奕遍虛空　至誠三遍誦真言　　方以印於頂左散金剛部心真言曰。",
        "from": "T19n0949_001:0191a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日羅(二合)地力(二合)迦(半字呼)娑縛(二合)賀(引)由結前印誦真言故。",
        "from": "T19n0949_001:0191a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方一切金剛手等承本願因。",
        "from": "T19n0949_001:0191a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲而集。",
        "from": "T19n0949_001:0191a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現大威德。",
        "from": "T19n0949_001:0191a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行人。",
        "from": "T19n0949_001:0191a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除障摧魔。",
        "from": "T19n0949_001:0191a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在無礙。",
        "from": "T19n0949_001:0191a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾成悉地。",
        "from": "T19n0949_001:0191a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速至菩提。",
        "from": "T19n0949_001:0191a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛甲冑護身印。",
        "from": "T19n0949_001:0191a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　止觀羽作金剛拳　　禪智橫屈於掌內　進力如鉤慣甲勢　　加持心額二肩喉　至心三遍誦真言　　印身五處頂上散甲冑護身真言曰。",
        "from": "T19n0949_001:0191a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵[口*部]入嚩攞(二合)[合*牛]由結甲印誦真言故。",
        "from": "T19n0949_001:0191a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持五處。",
        "from": "T19n0949_001:0191a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成大護身。",
        "from": "T19n0949_001:0191a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即同金剛堅固之體。",
        "from": "T19n0949_001:0191a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛藏王承本願力。",
        "from": "T19n0949_001:0191a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領諸眷屬。",
        "from": "T19n0949_001:0191a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數如塵沙無量金剛圍遶侍從。",
        "from": "T19n0949_001:0191a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明熾盛。",
        "from": "T19n0949_001:0191a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現忿怒形。",
        "from": "T19n0949_001:0191a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行人。",
        "from": "T19n0949_001:0191a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威德自在。",
        "from": "T19n0949_001:0191a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除作障。",
        "from": "T19n0949_001:0191a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧壞諸魔。",
        "from": "T19n0949_001:0191a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小則能護一身。",
        "from": "T19n0949_001:0191a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大則護持國界。",
        "from": "T19n0949_001:0191a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災厄。",
        "from": "T19n0949_001:0191a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水火刀兵。",
        "from": "T19n0949_001:0191a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒藥蠱虎狼猛獸。",
        "from": "T19n0949_001:0191a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉遠離不敢視之。",
        "from": "T19n0949_001:0191a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那藥迦自然怖走。",
        "from": "T19n0949_001:0191b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永無惱害。",
        "from": "T19n0949_001:0191b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾證菩提。",
        "from": "T19n0949_001:0191b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結辨事印。",
        "from": "T19n0949_001:0191b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　止觀二羽內叉拳　　禪智雙屈入掌中　然申忍願頭相跓　　頂上三旋成結護　左轉三匝是辟除　　隨心所到作方隅　破法能成一切事辦事佛頂真言曰。",
        "from": "T19n0949_001:0191b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三(去)漫多母馱南(引)唵拏嚕唵(二合)滿馱娑嚩(二合)賀由結前印及誦真言。",
        "from": "T19n0949_001:0191b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能辟除及結護界。",
        "from": "T19n0949_001:0191b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名諸佛警悟聖心。",
        "from": "T19n0949_001:0191b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能破他法。",
        "from": "T19n0949_001:0191b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞滅魔羅。",
        "from": "T19n0949_001:0191b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍八部。",
        "from": "T19n0949_001:0191b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅剎藥叉。",
        "from": "T19n0949_001:0191b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦。",
        "from": "T19n0949_001:0191b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忙怖奔走。",
        "from": "T19n0949_001:0191b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印。",
        "from": "T19n0949_001:0191b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世出世間一切事業速能成辦。",
        "from": "T19n0949_001:0191b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在無礙。",
        "from": "T19n0949_001:0191b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉地現前。",
        "from": "T19n0949_001:0191b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結奉獻閼伽印。",
        "from": "T19n0949_001:0191b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽仰掌捨器形。",
        "from": "T19n0949_001:0191b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　進力屈於忍願傍　　禪智曲補於進力　捧器三旋當額上　　想浴聖眾淨如蓮閼伽浴聖真言曰。",
        "from": "T19n0949_001:0191b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩麼三(去)滿多母馱南(引)誐誐曩糝魔沙麼娑嚩(二合引)賀由結此印誦真言奉獻閼伽浴聖故。",
        "from": "T19n0949_001:0191b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表修行人無始垢業蕩除清淨。",
        "from": "T19n0949_001:0191b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如妙蓮華。",
        "from": "T19n0949_001:0191b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來果獲得無染智。",
        "from": "T19n0949_001:0191b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結虛空普供印。",
        "from": "T19n0949_001:0191b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二羽合掌交初分　　右押左縛如金剛　想成真實微妙供　　無量雲海奉聖眾　供養一切諸如來　　後說四句妙伽他　五誦真言頂上散虛空大明真言曰曩莫三滿多沒馱南(引)薩嚩(二合)他(引)欠盟娜孽帝薩頗(二合)囉呬[牟*含]誐誐曩劍娑嚩(二合引)賀由結此印誦真言故。",
        "from": "T19n0949_001:0191b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不思議力。",
        "from": "T19n0949_001:0191c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從印流出一切供養。",
        "from": "T19n0949_001:0191c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量天眾各持天寶器。",
        "from": "T19n0949_001:0191c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛諸妙供養。",
        "from": "T19n0949_001:0191c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塞滿虛空所謂塗香燒燈。",
        "from": "T19n0949_001:0191c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食衣服。",
        "from": "T19n0949_001:0191c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幢蓋瓔珞。",
        "from": "T19n0949_001:0191c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻如來誦一遍故。",
        "from": "T19n0949_001:0191c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出塗香。",
        "from": "T19n0949_001:0191c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得戒品塗香。",
        "from": "T19n0949_001:0191c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦二遍故。",
        "from": "T19n0949_001:0191c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出焚香。",
        "from": "T19n0949_001:0191c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得定芬馥。",
        "from": "T19n0949_001:0191c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦三遍故。",
        "from": "T19n0949_001:0191c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出花鬘。",
        "from": "T19n0949_001:0191c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得離染妙蓮。",
        "from": "T19n0949_001:0191c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦四遍故。",
        "from": "T19n0949_001:0191c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出寶食。",
        "from": "T19n0949_001:0191c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得法喜禪悅。",
        "from": "T19n0949_001:0191c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦五遍故。",
        "from": "T19n0949_001:0191c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出寶燈。",
        "from": "T19n0949_001:0191c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲得如來五眼。",
        "from": "T19n0949_001:0191c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得如上諸功德波羅蜜門皆具足。",
        "from": "T19n0949_001:0191c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以心遍法界。",
        "from": "T19n0949_001:0191c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誠實言誦妙伽他。",
        "from": "T19n0949_001:0191c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "T19n0949_001:0191c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以我功德力　　如來加持力",
        "from": "T19n0949_001:0191c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　及以法界力　　普供養而住",
        "from": "T19n0949_001:0191c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以梵讚歌詠。",
        "from": "T19n0949_001:0191c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊相好金身殊勝功德。",
        "from": "T19n0949_001:0191c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麼禰史膩薩嚩若誐(一)地帶史膩拽捨枲嚩(二合)[寧*頁](二)步嘌步晚禰迦滿馱(三)三麼娑多(二合)尾儞也(二合)地跛(四)訖羅(二合)麼哩[寧*頁]曩謨窣覩(二合)帝怛囉(二合)哆哩左訖羅(二合)嚩(轉舌)底[寧*頁](六)由讚佛三身。",
        "from": "T19n0949_001:0191c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根諸功德。",
        "from": "T19n0949_001:0191c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬四千種。",
        "from": "T19n0949_001:0191c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殊勝不思議。",
        "from": "T19n0949_001:0191c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承斯歌詠因。",
        "from": "T19n0949_001:0191c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當來獲妙果。",
        "from": "T19n0949_001:0191c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福聚海無量。",
        "from": "T19n0949_001:0191c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同奇特尊。",
        "from": "T19n0949_001:0191c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結佛眼大明印。",
        "from": "T19n0949_001:0191c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　止觀虛合未開敷　　禪智雙屈在掌中　進力各押忍願背　　如眼開明照一切　安眉心額二肩喉　　起大悲愍怖畏除隨誦真言頂上散。",
        "from": "T19n0949_001:0191c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛眼大明母真言曰。",
        "from": "T19n0949_001:0192a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫薩嚩怛他(去引)蘗帝毘庾(引一)囉褐(二合二)毘藥(二合)三藐三沒弟毘藥(二合三)唵(四)嚕嚕窣普嚕(二合)入嚩攞底(丁以反)瑟姹(二合六)悉馱路(引)左[寧*頁]薩嚩(二合)[口*賴]他(二合去聲呼)娑(去)馱[寧*頁](八)娑嚩(二合引)賀此名一切佛眼大明。",
        "from": "T19n0949_001:0192a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能息可畏難調伏者。",
        "from": "T19n0949_001:0192a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲成就世間出世間一切佛頂大輪王法一切事位滅諸諍論。",
        "from": "T19n0949_001:0192a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是一切諸佛種族母。",
        "from": "T19n0949_001:0192a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復是一切諸大菩薩生養母。",
        "from": "T19n0949_001:0192a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為說頂輪真言威德奇特。",
        "from": "T19n0949_001:0192a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩皆失本心。",
        "from": "T19n0949_001:0192a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天龍神威力滅沒。",
        "from": "T19n0949_001:0192a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡誦一字佛頂明。",
        "from": "T19n0949_001:0192a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須誦佛眼明。",
        "from": "T19n0949_001:0192a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦畢已。",
        "from": "T19n0949_001:0192a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦誦七遍。",
        "from": "T19n0949_001:0192a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾聖歡喜安樂有情。",
        "from": "T19n0949_001:0192a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結一字根本印。",
        "from": "T19n0949_001:0192a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　止觀密縛內叉拳　　由慼忍願如劍形　禪智進力甲柱跓　　是名金剛佛頂印　想身威德同本尊　　流光晃曜遍十方印身五處頂上散。",
        "from": "T19n0949_001:0192a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金輪頂王真言曰。",
        "from": "T19n0949_001:0192a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三漫多(一)母馱南(二)唵[合*牛][口*部][口*臨](二合彈舌重呼)[合*牛]　此是摩訶印　　所謂如來頂　由斯結誦故　　即同於世尊　演說頂輪明　　三千六反動　山河皆勇沸　　大火遍魔宮　惶怖盡歸依　　地獄眾苦息　菩薩龍天眾　　畏仰如佛身次結大慈普護印。",
        "from": "T19n0949_001:0192a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度相叉作月形　禪智檀惠相著　印心額喉頂上散慈護真言曰。",
        "from": "T19n0949_001:0192a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵沒馱昧怛哩(二合)嚩日囉(二合)洛乞灑(二合)憾　結印誦明除怖畏　　起大悲心遍一切　所有怨敵惡相淩　　願彼皆當大安樂　由此三誦悲護故　　毒害之心自覺悟　深生悔過向菩提　　歡喜敬仰前人所　初後若常誦此明　　惶怖眾生得安慰　護大利益殊勝事　　速滿諸願證悉地次結淨珠印。",
        "from": "T19n0949_001:0192b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　盤珠於掌內　　如蓮未開形",
        "from": "T19n0949_001:0192b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　捧合於心上　　三七遍加持",
        "from": "T19n0949_001:0192b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　頂戴慇重心　　如法而供養",
        "from": "T19n0949_001:0192b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨珠真言曰。",
        "from": "T19n0949_001:0192b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿[口*納][口*部](二合引)帝[口*尾]惹曳(而異反)悉地(引)悉馱[口*賴](二合)剃娑嚩(二合引)賀次結持數印。",
        "from": "T19n0949_001:0192b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二羽半金剛　　禪智捻戒方",
        "from": "T19n0949_001:0192b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　進力忍願後(屈不相著)　　七遍持數明然後而念誦。",
        "from": "T19n0949_001:0192b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持珠真言曰。",
        "from": "T19n0949_001:0192b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫婆誐嚩帝蘇悉地娑馱也娑馱也娑馱囉剃娑嚩(二合引)賀　先當淨三業　　加法而念誦　一心莫散亂　　注想於本尊　字句分明呼　　不緩亦不急　勿生懈怠意　　聲咳及頻申　雜染縱惛沈　　如是諸過咎　少分生忘緣　　皆不得成就　念誦課數畢　　持珠安舊處　方入三昧耶　　當住本尊觀　食頃從定出　　却結根本印　次結佛眼明　　歌詠音讚歎　普供閼伽已　　辟除左解散　三部重護身　　最後慈護印　禮悔依前儀　　讀誦大乘典　隨意任經行　　常時莫間斷頂輪王要略一卷",
        "from": "T19n0949_001:0192b22_0",
        "context_with_next_sentence": false
    }
]