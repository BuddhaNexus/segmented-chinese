[
    {
        "source_sentence": "佛說花聚陀羅尼呪經",
        "from": "T21n1358_001:0876a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附東晉錄",
        "from": "T21n1358_001:0876a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1358_001:0876a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在阿耨達多龍王宮中。",
        "from": "T21n1358_001:0876a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸比丘五百人俱。",
        "from": "T21n1358_001:0876a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩滿足一千。",
        "from": "T21n1358_001:0876a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡是一生補處。",
        "from": "T21n1358_001:0876a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得陀羅尼位階十地。",
        "from": "T21n1358_001:0876a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如王子不久當得紹繼王位。",
        "from": "T21n1358_001:0876a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸菩薩亦復如是。",
        "from": "T21n1358_001:0876a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大功德而自莊嚴。",
        "from": "T21n1358_001:0876a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當得灌頂之位得成作佛。",
        "from": "T21n1358_001:0876a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸菩薩各從他方諸佛世界而來集會。",
        "from": "T21n1358_001:0876a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸佛所心無疑滯。",
        "from": "T21n1358_001:0876a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時會眾中有一菩薩。",
        "from": "T21n1358_001:0876a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰師子奮迅。",
        "from": "T21n1358_001:0876a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起偏袒右肩右膝著地。",
        "from": "T21n1358_001:0876a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛而白佛言。",
        "from": "T21n1358_001:0876a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若有善男子善女人。",
        "from": "T21n1358_001:0876a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡其形壽一切樂具供養如來。",
        "from": "T21n1358_001:0876b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得福多不。",
        "from": "T21n1358_001:0876b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告師子奮迅菩薩。",
        "from": "T21n1358_001:0876b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫作是說心生疑惑。",
        "from": "T21n1358_001:0876b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養如來得福甚多。",
        "from": "T21n1358_001:0876b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1358_001:0876b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來有無量戒德無量禪定三昧無量智慧無量解脫無量解脫知見。",
        "from": "T21n1358_001:0876b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并諸聲聞緣覺辟支佛。",
        "from": "T21n1358_001:0876b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切賢聖其福甚多不可限量。",
        "from": "T21n1358_001:0876b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時師子奮迅菩薩。",
        "from": "T21n1358_001:0876b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說心生信解。",
        "from": "T21n1358_001:0876b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍加恭敬供養尊重讚歎。",
        "from": "T21n1358_001:0876b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以衣服房舍臥具病瘦湯藥。",
        "from": "T21n1358_001:0876b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種一切樂具。",
        "from": "T21n1358_001:0876b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉供養令無所乏。",
        "from": "T21n1358_001:0876b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1358_001:0876b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來滅度之後。",
        "from": "T21n1358_001:0876b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取佛舍利如芥子許供養禮拜。",
        "from": "T21n1358_001:0876b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比前功德其福正等。",
        "from": "T21n1358_001:0876b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人持以七寶如須彌山等。",
        "from": "T21n1358_001:0876b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一劫中布施聲聞辟支佛。",
        "from": "T21n1358_001:0876b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得福多不。",
        "from": "T21n1358_001:0876b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不也世尊。",
        "from": "T21n1358_001:0876b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若有出家在家之人。",
        "from": "T21n1358_001:0876b14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能持一錢以用布施初發菩提心人。",
        "from": "T21n1358_001:0876b15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得福德比前功德。",
        "from": "T21n1358_001:0876b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百分千分百千萬分不及其一。",
        "from": "T21n1358_001:0876b16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至算數譬喻所不能及。",
        "from": "T21n1358_001:0876b17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是如佛所說。",
        "from": "T21n1358_001:0876b17_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人。",
        "from": "T21n1358_001:0876b18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來滅度之後行於曠路。",
        "from": "T21n1358_001:0876b18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見於如來塔廟。",
        "from": "T21n1358_001:0876b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男女。",
        "from": "T21n1358_001:0876b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於一華若一燈燭。",
        "from": "T21n1358_001:0876b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一團泥用塗像前以用供養。",
        "from": "T21n1358_001:0876b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1358_001:0876b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持一銅錢施於佛像。",
        "from": "T21n1358_001:0876b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為補治故。",
        "from": "T21n1358_001:0876b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以一掬水用灑佛塔地。",
        "from": "T21n1358_001:0876b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除去不淨乾花燭燼。",
        "from": "T21n1358_001:0876b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若燒香供養。",
        "from": "T21n1358_001:0876b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉足一步詣於塔寺。",
        "from": "T21n1358_001:0876b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一稱南無佛。",
        "from": "T21n1358_001:0876b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲使此人墮三惡道。",
        "from": "T21n1358_001:0876b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬劫終無是處。",
        "from": "T21n1358_001:0876b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告師子奮迅菩薩。",
        "from": "T21n1358_001:0876b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有陀羅尼名曰花聚。",
        "from": "T21n1358_001:0876b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多所饒益諸天世人。",
        "from": "T21n1358_001:0876b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能受持讀誦通利如法修行。",
        "from": "T21n1358_001:0876b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得福德倍過於上。",
        "from": "T21n1358_001:0876b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有善男子。",
        "from": "T21n1358_001:0876b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養聲聞緣覺辟支佛菩薩。",
        "from": "T21n1358_001:0876b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬倍不及其一。",
        "from": "T21n1358_001:0876b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至算數譬喻所不能知。",
        "from": "T21n1358_001:0876c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人命終終不生於八難之處卑賤之家。",
        "from": "T21n1358_001:0876c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在所生處六情完具。",
        "from": "T21n1358_001:0876c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自識宿命。",
        "from": "T21n1358_001:0876c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常值三寶見佛聞法。",
        "from": "T21n1358_001:0876c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不忘失菩提之心。",
        "from": "T21n1358_001:0876c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能得甚深無量辯才。",
        "from": "T21n1358_001:0876c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘六神通遊至十方諸佛世界。",
        "from": "T21n1358_001:0876c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諮受妙法教化眾生。",
        "from": "T21n1358_001:0876c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說呪曰。",
        "from": "T21n1358_001:0876c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多狄他　度羅尼　陀羅尼　陀羅尼　磨禰波　步婆散尼　悉題　旃題　涅目脂　涅呵梨　慮伽鉢帝　佛陀鉢帝　帝梨　烏迦囉[口*知]佉伽羅[口*知]　囉殊波伽帝　帝闍和帝　毘舍羅佛題　曇摩波嘶　阿叉夜羯卑羯波和帝　阿彌多羯卑　休多舍尼　帝闍啝帝　泥句婆摩一唏帝　帝闍伽呵和帝　因題夜佛題　咥拏佛　提　莎訶佛言有善男子善女人。",
        "from": "T21n1358_001:0876c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲行此陀羅尼者。",
        "from": "T21n1358_001:0876c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若二月三月若八月中。",
        "from": "T21n1358_001:0876c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從白月八日至十五日。",
        "from": "T21n1358_001:0876c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨自澡浴著新淨衣。",
        "from": "T21n1358_001:0876c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於靜處坐佛形像。",
        "from": "T21n1358_001:0876c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懸繒幡蓋。",
        "from": "T21n1358_001:0876c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花香供養禮拜懺悔。",
        "from": "T21n1358_001:0876c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜六時誦此陀羅尼。",
        "from": "T21n1358_001:0876c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若坐若行莫令心亂。",
        "from": "T21n1358_001:0876c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿七日已當得見佛。",
        "from": "T21n1358_001:0876c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不見者復更二七三七日。",
        "from": "T21n1358_001:0876c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心誦此陀羅尼。",
        "from": "T21n1358_001:0876c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必得見佛坐蓮華上而為說法。",
        "from": "T21n1358_001:0876c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時即得自識宿命念力堅固。",
        "from": "T21n1358_001:0876c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得陀羅尼無礙辯才若求多聞若求禪定。",
        "from": "T21n1358_001:0876c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求智慧若求辯才。",
        "from": "T21n1358_001:0876c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求醫方若求呪術。",
        "from": "T21n1358_001:0876c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求工巧若求文藝。",
        "from": "T21n1358_001:0876c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種隨心所願悉皆得之。",
        "from": "T21n1358_001:0876c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成佛終不忘失。",
        "from": "T21n1358_001:0876c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除其四諦。",
        "from": "T21n1358_001:0876c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時師子奮迅菩薩。",
        "from": "T21n1358_001:0876c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天人民及阿修羅諸比丘眾。",
        "from": "T21n1358_001:0876c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行。",
        "from": "T21n1358_001:0876c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說花聚陀羅尼呪經",
        "from": "T21n1358_001:0876c28_0",
        "context_with_next_sentence": false
    }
]