[
    {
        "source_sentence": "佛祖綱目卷第十五(列字號)",
        "from": "X85n1594_015:0578a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲子(秦始皇十年起)壬辰(秦二世元年)乙未(漢高祖元年)丁未(漢惠帝元年)甲寅(呂太后元年)壬戌(漢文帝元年)癸亥(漢文帝二年止)漢劉姓。",
        "from": "X85n1594_015:0578a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西漢起高祖元年乙未。",
        "from": "X85n1594_015:0578a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止更始二年甲申。",
        "from": "X85n1594_015:0578a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四帝。",
        "from": "X85n1594_015:0578a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合二百十五年。",
        "from": "X85n1594_015:0578a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(王莽篡位十五年)東漢起光武建武元年乙酉。",
        "from": "X85n1594_015:0578a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止漢獻帝建安二十五年庚子。",
        "from": "X85n1594_015:0578a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二帝。",
        "from": "X85n1594_015:0578b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合一百九十五年。",
        "from": "X85n1594_015:0578b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二漢合四百二十五年。",
        "from": "X85n1594_015:0578b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(己丑)十四祖龍樹傳法迦那提婆",
        "from": "X85n1594_015:0578b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹既得法於摩羅已。",
        "from": "X85n1594_015:0578b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後至南印度。",
        "from": "X85n1594_015:0578b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼國之人。",
        "from": "X85n1594_015:0578b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多信福業。",
        "from": "X85n1594_015:0578b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹為說法。",
        "from": "X85n1594_015:0578b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遞相謂曰。",
        "from": "X85n1594_015:0578b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人有福業。",
        "from": "X85n1594_015:0578b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間第一。",
        "from": "X85n1594_015:0578b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徒言佛性。",
        "from": "X85n1594_015:0578b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰能覩之。",
        "from": "X85n1594_015:0578b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹曰。",
        "from": "X85n1594_015:0578b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝欲見佛性。",
        "from": "X85n1594_015:0578b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須除我慢。",
        "from": "X85n1594_015:0578b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人曰。",
        "from": "X85n1594_015:0578b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性大小。",
        "from": "X85n1594_015:0578b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹曰。",
        "from": "X85n1594_015:0578b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非大非小。",
        "from": "X85n1594_015:0578b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非廣非狹。",
        "from": "X85n1594_015:0578b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無福無報。",
        "from": "X85n1594_015:0578b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不死不生。",
        "from": "X85n1594_015:0578b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼聞理勝。",
        "from": "X85n1594_015:0578b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉回初心。",
        "from": "X85n1594_015:0578b08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹復於座上。",
        "from": "X85n1594_015:0578b08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現自在身。",
        "from": "X85n1594_015:0578b08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如滿月輪。",
        "from": "X85n1594_015:0578b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾惟聞法音。",
        "from": "X85n1594_015:0578b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覩樹相。",
        "from": "X85n1594_015:0578b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼眾中有長者子。",
        "from": "X85n1594_015:0578b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名迦那提婆。",
        "from": "X85n1594_015:0578b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂眾曰。",
        "from": "X85n1594_015:0578b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識此相否。",
        "from": "X85n1594_015:0578b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾曰。",
        "from": "X85n1594_015:0578b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目所未覩。",
        "from": "X85n1594_015:0578b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安能辨識。",
        "from": "X85n1594_015:0578b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆曰。",
        "from": "X85n1594_015:0578b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是尊者。",
        "from": "X85n1594_015:0578b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現佛性體相。",
        "from": "X85n1594_015:0578b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示我等。",
        "from": "X85n1594_015:0578b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以知之。",
        "from": "X85n1594_015:0578b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋以無相三昧。",
        "from": "X85n1594_015:0578b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形如滿月。",
        "from": "X85n1594_015:0578b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性之義。",
        "from": "X85n1594_015:0578b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓然虗明。",
        "from": "X85n1594_015:0578b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言訖。",
        "from": "X85n1594_015:0578b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪相即隱。",
        "from": "X85n1594_015:0578b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復居本座。",
        "from": "X85n1594_015:0578b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說偈言。",
        "from": "X85n1594_015:0578b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身現圓月相。",
        "from": "X85n1594_015:0578b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以表諸佛體。",
        "from": "X85n1594_015:0578b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法無其形。",
        "from": "X85n1594_015:0578b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用辨非聲色。",
        "from": "X85n1594_015:0578b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼眾聞偈。",
        "from": "X85n1594_015:0578b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓悟無生。",
        "from": "X85n1594_015:0578b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸願出家。",
        "from": "X85n1594_015:0578b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以求解脫。",
        "from": "X85n1594_015:0578b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹即為剃髮。",
        "from": "X85n1594_015:0578b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命諸聖授具。",
        "from": "X85n1594_015:0578b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時南印度有五千外道。",
        "from": "X85n1594_015:0578b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興大幻術。",
        "from": "X85n1594_015:0578b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王與國人。",
        "from": "X85n1594_015:0578b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靡然從之。",
        "from": "X85n1594_015:0578b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知向佛。",
        "from": "X85n1594_015:0578b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹為感慨。",
        "from": "X85n1594_015:0578b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易其威儀。",
        "from": "X85n1594_015:0578b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白衣持幡。",
        "from": "X85n1594_015:0578b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每俟王出。",
        "from": "X85n1594_015:0578b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則趨其前。",
        "from": "X85n1594_015:0578b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或隱或顯。",
        "from": "X85n1594_015:0578b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是者七載。",
        "from": "X85n1594_015:0578b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王一日忽異之。",
        "from": "X85n1594_015:0578b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "X85n1594_015:0578b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何者。",
        "from": "X85n1594_015:0578b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而前吾行。",
        "from": "X85n1594_015:0578b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追則不得。",
        "from": "X85n1594_015:0578b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱之不去。",
        "from": "X85n1594_015:0578b19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹曰。",
        "from": "X85n1594_015:0578b19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾是智人。",
        "from": "X85n1594_015:0578b20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知一切法。",
        "from": "X85n1594_015:0578b20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X85n1594_015:0578b20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝知諸天今何所為。",
        "from": "X85n1594_015:0578b20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹曰。",
        "from": "X85n1594_015:0578b20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天今與修羅方戰。",
        "from": "X85n1594_015:0578b21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王曰。",
        "from": "X85n1594_015:0578b21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以明之。",
        "from": "X85n1594_015:0578b21_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹曰。",
        "from": "X85n1594_015:0578b21_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃則徵矣。",
        "from": "X85n1594_015:0578b21_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄有戈戟手足。",
        "from": "X85n1594_015:0578b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自空紛然而下。",
        "from": "X85n1594_015:0578b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王遂大敬信。",
        "from": "X85n1594_015:0578b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命諸外道。",
        "from": "X85n1594_015:0578b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆歸禮樹。",
        "from": "X85n1594_015:0578b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹悉化之。",
        "from": "X85n1594_015:0578b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令歸三寶。",
        "from": "X85n1594_015:0578b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後謂上首弟子迦那提婆曰。",
        "from": "X85n1594_015:0578b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大法眼藏。",
        "from": "X85n1594_015:0578b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當付汝。",
        "from": "X85n1594_015:0578b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽吾偈曰。",
        "from": "X85n1594_015:0578b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為明隱顯法。",
        "from": "X85n1594_015:0578b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方說解脫理。",
        "from": "X85n1594_015:0578c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法心不證。",
        "from": "X85n1594_015:0578c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無嗔亦無喜。",
        "from": "X85n1594_015:0578c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付法已。",
        "from": "X85n1594_015:0578c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入月輪三昧。",
        "from": "X85n1594_015:0578c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣現神變。",
        "from": "X85n1594_015:0578c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復就本座。",
        "from": "X85n1594_015:0578c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凝然入寂。",
        "from": "X85n1594_015:0578c02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及七日天雨舍利。",
        "from": "X85n1594_015:0578c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹復於座。",
        "from": "X85n1594_015:0578c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指空語眾曰。",
        "from": "X85n1594_015:0578c03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔拘那含佛弟子。",
        "from": "X85n1594_015:0578c03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶迦尊者。",
        "from": "X85n1594_015:0578c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三願。",
        "from": "X85n1594_015:0578c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為佛時。",
        "from": "X85n1594_015:0578c04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡有聖士化度。",
        "from": "X85n1594_015:0578c04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則天澍雨。",
        "from": "X85n1594_015:0578c04_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及其身皆為舍利。",
        "from": "X85n1594_015:0578c05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大地所生。",
        "from": "X85n1594_015:0578c05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆堪為藥。",
        "from": "X85n1594_015:0578c05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "療眾生病。",
        "from": "X85n1594_015:0578c05_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三凡有智者。",
        "from": "X85n1594_015:0578c06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得所知微妙。",
        "from": "X85n1594_015:0578c06_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以通宿命。",
        "from": "X85n1594_015:0578c06_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今雨舍利。",
        "from": "X85n1594_015:0578c06_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶迦神力也。",
        "from": "X85n1594_015:0578c07_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言已復寂。",
        "from": "X85n1594_015:0578c07_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦那提婆與眾建塔。",
        "from": "X85n1594_015:0578c07_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閟其全身。",
        "from": "X85n1594_015:0578c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當此土秦始皇三十五年己丑歲也。",
        "from": "X85n1594_015:0578c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖綱目卷第十五",
