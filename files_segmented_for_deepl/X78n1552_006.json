[
    {
        "source_sentence": "修西聞見錄卷六",
        "from": "X78n1552_006:0418b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東土　雞園偶　集",
        "from": "X78n1552_006:0418b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱道人事略雲陽子",
        "from": "X78n1552_006:0418b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱道人。",
        "from": "X78n1552_006:0418b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丹陽民也。",
        "from": "X78n1552_006:0418b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為本縣昌國寺司香火。",
        "from": "X78n1552_006:0418b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋戒念佛。",
        "from": "X78n1552_006:0418b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人咸敬信之。",
        "from": "X78n1552_006:0418b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽一日。",
        "from": "X78n1552_006:0418b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂鄉城諸相識曰。",
        "from": "X78n1552_006:0418b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我欲化汝等薪一把。",
        "from": "X78n1552_006:0418b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積之以焚我身。",
        "from": "X78n1552_006:0418b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或笑之曰。",
        "from": "X78n1552_006:0418b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝圓寂耶。",
        "from": "X78n1552_006:0418b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不自焚。",
        "from": "X78n1552_006:0418b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等來焚汝。",
        "from": "X78n1552_006:0418b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至期大眾都集。",
        "from": "X78n1552_006:0418b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人中坐。",
        "from": "X78n1552_006:0418b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徐起坐薪上。",
        "from": "X78n1552_006:0418b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命眾舉火。",
        "from": "X78n1552_006:0418b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾不忍。",
        "from": "X78n1552_006:0418b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃自焚焉。",
        "from": "X78n1552_006:0418b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昌國主人奔而赴其前。",
        "from": "X78n1552_006:0418b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人心忽飛出。",
        "from": "X78n1552_006:0418b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主人哭而滅其火。",
        "from": "X78n1552_006:0418b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納其心。",
        "from": "X78n1552_006:0418b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全身皆不壞。",
        "from": "X78n1552_006:0418b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃鎔金以加其上。",
        "from": "X78n1552_006:0418b13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人皆見道人。",
        "from": "X78n1552_006:0418b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐雲中。",
        "from": "X78n1552_006:0418b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳴魚西去。",
        "from": "X78n1552_006:0418b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡地方有警。",
        "from": "X78n1552_006:0418b14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人皆預見道人。",
        "from": "X78n1552_006:0418b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐雲中擊木魚。",
        "from": "X78n1552_006:0418b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聲入聽。",
        "from": "X78n1552_006:0418b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄭抱因周國定",
        "from": "X78n1552_006:0418b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抱因。",
        "from": "X78n1552_006:0418b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揚州鄭氏子。",
        "from": "X78n1552_006:0418b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為酒工。",
        "from": "X78n1552_006:0418b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄而傭於廟。",
        "from": "X78n1552_006:0418b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不樂也。",
        "from": "X78n1552_006:0418b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自投而歸於玉尺。",
        "from": "X78n1552_006:0418b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願侍左右。",
        "from": "X78n1552_006:0418b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然光不定。",
        "from": "X78n1552_006:0418b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又慕襍教某而聽其講。",
        "from": "X78n1552_006:0418b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以為念佛不必出聲。",
        "from": "X78n1552_006:0418b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂一病而不能念佛以至於死。",
        "from": "X78n1552_006:0418b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抱因為人。",
        "from": "X78n1552_006:0418b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗有心於布施接引。",
        "from": "X78n1552_006:0418b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於念佛尤力。",
        "from": "X78n1552_006:0418b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每天寒四更。",
        "from": "X78n1552_006:0418b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在雞園彌勒殿繞案而誦佛名。",
        "from": "X78n1552_006:0418b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲搖搖如大地微動。",
        "from": "X78n1552_006:0418b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉尺心喜之。",
        "from": "X78n1552_006:0418b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以同住中有一先輩。",
        "from": "X78n1552_006:0418b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恨其妨於睡。",
        "from": "X78n1552_006:0418b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止其高聲。",
        "from": "X78n1552_006:0418b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂鬱然不自伸。",
        "from": "X78n1552_006:0418b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故非人得其便。",
        "from": "X78n1552_006:0418b23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引而致之襍教之前也。",
        "from": "X78n1552_006:0418b23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後玉尺為彼供燈鏡誦大悲呪。",
        "from": "X78n1552_006:0418b24_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呼其名。",
        "from": "X78n1552_006:0418c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七日。",
        "from": "X78n1552_006:0418c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後大作佛七以拯其魂爽。",
        "from": "X78n1552_006:0418c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抱因之淨土。",
        "from": "X78n1552_006:0418c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本在空中。",
        "from": "X78n1552_006:0418c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有障也。",
        "from": "X78n1552_006:0418c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切人能成聖用說鄭應房",
        "from": "X78n1552_006:0418c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡工匠之作佛像者必生天。",
        "from": "X78n1552_006:0418c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故刻帝釋書之人。",
        "from": "X78n1552_006:0418c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或轉身入忉利天。",
        "from": "X78n1552_006:0418c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得小部署。",
        "from": "X78n1552_006:0418c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此理之常。",
        "from": "X78n1552_006:0418c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無足怪者。",
        "from": "X78n1552_006:0418c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃生打鐵而往生。",
        "from": "X78n1552_006:0418c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼是修得。",
        "from": "X78n1552_006:0418c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非報得也。",
        "from": "X78n1552_006:0418c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報得者自不知。",
        "from": "X78n1552_006:0418c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修得者自知之。",
        "from": "X78n1552_006:0418c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一有心一無心也。",
        "from": "X78n1552_006:0418c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書姚佛度事楊省愚",
        "from": "X78n1552_006:0418c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常州三河口老農姚佛度。",
        "from": "X78n1552_006:0418c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不食葷血。",
        "from": "X78n1552_006:0418c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜行方便利益事。",
        "from": "X78n1552_006:0418c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾避紅巾。",
        "from": "X78n1552_006:0418c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老弱疲於行。",
        "from": "X78n1552_006:0418c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛度挺身負之竄。",
        "from": "X78n1552_006:0418c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來救脫數百計。",
        "from": "X78n1552_006:0418c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寇退。",
        "from": "X78n1552_006:0418c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富室設粥局。",
        "from": "X78n1552_006:0418c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛度往。",
        "from": "X78n1552_006:0418c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "司事者曰。",
        "from": "X78n1552_006:0418c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝來食粥乎。",
        "from": "X78n1552_006:0418c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋以其衣藍縷也。",
        "from": "X78n1552_006:0418c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛度曰否。",
        "from": "X78n1552_006:0418c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我來輸粟。",
        "from": "X78n1552_006:0418c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則磬所有以濟人。",
        "from": "X78n1552_006:0418c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂人曰。",
        "from": "X78n1552_006:0418c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越日西行矣。",
        "from": "X78n1552_006:0418c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期。",
        "from": "X78n1552_006:0418c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端坐而化。",
        "from": "X78n1552_006:0418c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書江陰某甲事楊省愚",
        "from": "X78n1552_006:0418c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江陰某甲以技自食。",
        "from": "X78n1552_006:0418c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碌碌也。",
        "from": "X78n1552_006:0418c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇西園道人。",
        "from": "X78n1552_006:0418c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方以淨土書四散勸人。",
        "from": "X78n1552_006:0418c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "某聞風而起。",
        "from": "X78n1552_006:0418c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂半日治生。",
        "from": "X78n1552_006:0418c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半日行持。",
        "from": "X78n1552_006:0418c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "路中亦佛聲不絕。",
        "from": "X78n1552_006:0418c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽一日謂人。",
        "from": "X78n1552_006:0418c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾七日後往西。",
        "from": "X78n1552_006:0418c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂精進一室。",
        "from": "X78n1552_006:0418c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲水。",
        "from": "X78n1552_006:0418c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱佛名。",
        "from": "X78n1552_006:0418c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期坐逝。",
        "from": "X78n1552_006:0418c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同人置缸中。",
        "from": "X78n1552_006:0418c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匇匇避寇。",
        "from": "X78n1552_006:0418c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三年後。",
        "from": "X78n1552_006:0418c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟缸視之。",
        "from": "X78n1552_006:0418c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全身不朽。",
        "from": "X78n1552_006:0418c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修西聞見錄第六",
        "from": "X78n1552_006:0418c21_0",
        "context_with_next_sentence": false
    }
]