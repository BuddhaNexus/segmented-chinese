    },
    {
        "source_sentence": "二正述願文三",
        "from": "X61n1160_001:0513c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初求生西方正因二得生西方明驗",
        "from": "X61n1160_001:0513c14_0",
