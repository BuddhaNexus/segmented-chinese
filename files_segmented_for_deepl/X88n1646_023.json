[
    {
        "source_sentence": "居士傳二十三",
        "from": "X88n1646_023:0223b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張平叔傳",
        "from": "X88n1646_023:0223b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張平叔。",
        "from": "X88n1646_023:0223b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初名伯端。",
        "from": "X88n1646_023:0223b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後改名用誠。",
        "from": "X88n1646_023:0223b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號紫陽。",
        "from": "X88n1646_023:0223b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台人也。",
        "from": "X88n1646_023:0223b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熈寧中遊蜀。",
        "from": "X88n1646_023:0223b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇劉海蟾授以丹法。",
        "from": "X88n1646_023:0223b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久之洞徹法源。",
        "from": "X88n1646_023:0223b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作悟真內外篇。",
        "from": "X88n1646_023:0223b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序云。",
        "from": "X88n1646_023:0223b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人之生也。",
        "from": "X88n1646_023:0223b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆緣妄情而有其身。",
        "from": "X88n1646_023:0223b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有其身則有患。",
        "from": "X88n1646_023:0223b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無身。",
        "from": "X88n1646_023:0223b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "患從何有。",
        "from": "X88n1646_023:0223b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫欲免夫患者。",
        "from": "X88n1646_023:0223b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫若體夫至道。",
        "from": "X88n1646_023:0223b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲體夫至道。",
        "from": "X88n1646_023:0223b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫若明夫本心。",
        "from": "X88n1646_023:0223b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故心者道之體也。",
        "from": "X88n1646_023:0223b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道者心之用也。",
        "from": "X88n1646_023:0223b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人能察心觀性。",
        "from": "X88n1646_023:0223b09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則圓明之體自現。",
        "from": "X88n1646_023:0223b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無為之用自成。",
        "from": "X88n1646_023:0223b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不假施功。",
        "from": "X88n1646_023:0223b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓超彼岸。",
        "from": "X88n1646_023:0223b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非心境朗然神珠廓明。",
        "from": "X88n1646_023:0223b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則何以使諸相頓離纖塵不染。",
        "from": "X88n1646_023:0223b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心源自在決定無生者哉。",
        "from": "X88n1646_023:0223b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然使明心體道之士。",
        "from": "X88n1646_023:0223b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身不能累其性。",
        "from": "X88n1646_023:0223b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境不能亂其真。",
        "from": "X88n1646_023:0223b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則刀兵烏能傷。",
        "from": "X88n1646_023:0223b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虎兕烏能害。",
        "from": "X88n1646_023:0223b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巨焚大浸烏足為虞。",
        "from": "X88n1646_023:0223b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達人心若明鏡。",
        "from": "X88n1646_023:0223b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑑而不納。",
        "from": "X88n1646_023:0223b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨機應物。",
        "from": "X88n1646_023:0223b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和而不唱。",
        "from": "X88n1646_023:0223b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能勝物而無傷也。",
        "from": "X88n1646_023:0223b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此所謂無上至真之妙道也。",
        "from": "X88n1646_023:0223b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "原其道本無名。",
        "from": "X88n1646_023:0223b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人強名。",
        "from": "X88n1646_023:0223b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道本無言。",
        "from": "X88n1646_023:0223b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖人強言耳。",
        "from": "X88n1646_023:0223b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然名言若寂。",
        "from": "X88n1646_023:0223b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則時流無以識其體而歸其真。",
        "from": "X88n1646_023:0223b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以聖人設教立言以顯其道。",
        "from": "X88n1646_023:0223b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何此道至妙至微。",
        "from": "X88n1646_023:0223b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人根性迷鈍。",
        "from": "X88n1646_023:0223b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執有其身而惡死悅生。",
        "from": "X88n1646_023:0223b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故卒難了悟。",
        "from": "X88n1646_023:0223b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃老悲其貪著。",
        "from": "X88n1646_023:0223b19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以修生之術。",
        "from": "X88n1646_023:0223b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順其所欲。",
        "from": "X88n1646_023:0223b20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸次導之。",
        "from": "X88n1646_023:0223b20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以修生之要在金丹。",
        "from": "X88n1646_023:0223b20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金丹之要在神水華池。",
        "from": "X88n1646_023:0223b21_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故道德．陰符之教得盛行於世矣。",
        "from": "X88n1646_023:0223b21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其言隱而理奧。",
        "from": "X88n1646_023:0223b22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者雖諷其文而莫曉其義。",
        "from": "X88n1646_023:0223b22_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不遇至人授之口訣。",
        "from": "X88n1646_023:0223b23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱揣量百種終莫能著其功而成其事。",
        "from": "X88n1646_023:0223b23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余向己酉歲於成都遇師授丹法。",
        "from": "X88n1646_023:0223b24_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自後三傳於人。",
        "from": "X88n1646_023:0223c01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三遭禍患。",
        "from": "X88n1646_023:0223c01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不逾兩旬。",
        "from": "X88n1646_023:0223c01_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃省前過。",
        "from": "X88n1646_023:0223c01_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今以往常箝口結舌。",
        "from": "X88n1646_023:0223c02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無敢復言矣。",
        "from": "X88n1646_023:0223c02_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此悟真篇中所歌咏大丹藥物火候細微之旨。",
        "from": "X88n1646_023:0223c02_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不備悉。",
        "from": "X88n1646_023:0223c03_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好事者夙有仙骨觀之。",
        "from": "X88n1646_023:0223c03_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則智慮自明。",
        "from": "X88n1646_023:0223c04_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此乃天之所賜。",
        "from": "X88n1646_023:0223c04_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非余之輙傳也。",
        "from": "X88n1646_023:0223c04_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其篇末歌頌談見性之法。",
        "from": "X88n1646_023:0223c05_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即上之所謂無為妙覺之道也。",
        "from": "X88n1646_023:0223c05_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然無為之道。",
        "from": "X88n1646_023:0223c06_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齊物為心。",
        "from": "X88n1646_023:0223c06_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖顯秘要。",
        "from": "X88n1646_023:0223c06_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終無過咎。",
        "from": "X88n1646_023:0223c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何凡夫緣業有厚薄。",
        "from": "X88n1646_023:0223c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性根有利鈍。",
        "from": "X88n1646_023:0223c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱聞一音紛成異見。",
        "from": "X88n1646_023:0223c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有根性猛利之士見聞此篇。",
        "from": "X88n1646_023:0223c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知余得達摩諸祖最上一乘之妙旨。",
        "from": "X88n1646_023:0223c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可因一言而悟萬法也。",
        "from": "X88n1646_023:0223c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其習氣尚餘。",
        "from": "X88n1646_023:0223c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則歸中小之見。",
        "from": "X88n1646_023:0223c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非余之咎矣。",
        "from": "X88n1646_023:0223c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外篇偈頌三十三首。",
        "from": "X88n1646_023:0223c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文多不錄。",
        "from": "X88n1646_023:0223c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錄其無心頌云。",
        "from": "X88n1646_023:0223c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪笑我心。",
        "from": "X88n1646_023:0223c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如頑如鄙。",
        "from": "X88n1646_023:0223c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兀兀騰騰。",
        "from": "X88n1646_023:0223c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任物安委。",
        "from": "X88n1646_023:0223c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解修行。",
        "from": "X88n1646_023:0223c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不造罪。",
        "from": "X88n1646_023:0223c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不曾利人。",
        "from": "X88n1646_023:0223c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不私己。",
        "from": "X88n1646_023:0223c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不持戒律。",
        "from": "X88n1646_023:0223c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不拘忌諱。",
        "from": "X88n1646_023:0223c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知禮樂。",
        "from": "X88n1646_023:0223c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不行仁義。",
        "from": "X88n1646_023:0223c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間所能。",
        "from": "X88n1646_023:0223c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百無一會。",
        "from": "X88n1646_023:0223c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢來喫飯。",
        "from": "X88n1646_023:0223c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴來飲水。",
        "from": "X88n1646_023:0223c14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "困則打睡。",
        "from": "X88n1646_023:0223c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺則行履。",
        "from": "X88n1646_023:0223c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熱則單衣。",
        "from": "X88n1646_023:0223c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寒則盖被。",
        "from": "X88n1646_023:0223c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無思無慮。",
        "from": "X88n1646_023:0223c15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何憂何喜。",
        "from": "X88n1646_023:0223c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不悔不謀。",
        "from": "X88n1646_023:0223c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無念無意。",
        "from": "X88n1646_023:0223c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此生榮辱。",
        "from": "X88n1646_023:0223c16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逆旅而已。",
        "from": "X88n1646_023:0223c16_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "林木棲鳥。",
        "from": "X88n1646_023:0223c17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可為比。",
        "from": "X88n1646_023:0223c17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來亦不禁。",
        "from": "X88n1646_023:0223c17_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去亦不止。",
        "from": "X88n1646_023:0223c17_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不避不求。",
        "from": "X88n1646_023:0223c17_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無讚無毀。",
        "from": "X88n1646_023:0223c18_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不厭醜惡。",
        "from": "X88n1646_023:0223c18_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不羨善美。",
        "from": "X88n1646_023:0223c18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不棲靜室。",
        "from": "X88n1646_023:0223c18_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不遠閙市。",
        "from": "X88n1646_023:0223c18_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不說人非。",
        "from": "X88n1646_023:0223c19_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不誇己是。",
        "from": "X88n1646_023:0223c19_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不厚尊官。",
        "from": "X88n1646_023:0223c19_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不薄賤稚。",
        "from": "X88n1646_023:0223c19_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親愛冤讐。",
        "from": "X88n1646_023:0223c19_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大小內外。",
        "from": "X88n1646_023:0223c20_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀樂得喪。",
        "from": "X88n1646_023:0223c20_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欽侮險易。",
        "from": "X88n1646_023:0223c20_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無兩覩。",
        "from": "X88n1646_023:0223c20_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坦然一揆。",
        "from": "X88n1646_023:0223c20_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為福先。",
        "from": "X88n1646_023:0223c21_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為禍始。",
        "from": "X88n1646_023:0223c21_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感而後應。",
        "from": "X88n1646_023:0223c21_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迫而後起。",
        "from": "X88n1646_023:0223c21_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不畏鋒刃。",
        "from": "X88n1646_023:0223c21_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焉怕虎兕。",
        "from": "X88n1646_023:0223c22_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨物稱呼。",
        "from": "X88n1646_023:0223c22_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈拘名字。",
        "from": "X88n1646_023:0223c22_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼不就色。",
        "from": "X88n1646_023:0223c22_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲不來耳。",
        "from": "X88n1646_023:0223c22_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所有相。",
        "from": "X88n1646_023:0223c23_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆屬妄偽。",
        "from": "X88n1646_023:0223c23_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男女形聲。",
        "from": "X88n1646_023:0223c23_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉非定體。",
        "from": "X88n1646_023:0223c23_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體相無心。",
        "from": "X88n1646_023:0223c23_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不染不礙。",
        "from": "X88n1646_023:0223c24_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在逍遙。",
        "from": "X88n1646_023:0223c24_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物莫能累。",
        "from": "X88n1646_023:0223c24_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙覺光圓。",
        "from": "X88n1646_023:0223c24_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "映徹表裏。",
        "from": "X88n1646_023:0223c24_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "包褁六極。",
        "from": "X88n1646_023:0224a01_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有遐邇。",
        "from": "X88n1646_023:0224a01_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光兮非光。",
        "from": "X88n1646_023:0224a01_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如月在水。",
        "from": "X88n1646_023:0224a01_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取捨既難。",
        "from": "X88n1646_023:0224a01_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復何比擬。",
        "from": "X88n1646_023:0224a02_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了茲妙用。",
        "from": "X88n1646_023:0224a02_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迥然超彼。",
        "from": "X88n1646_023:0224a02_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或問所宗。",
        "from": "X88n1646_023:0224a02_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此而已矣。",
        "from": "X88n1646_023:0224a02_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年九十一坐趺而化。",
        "from": "X88n1646_023:0224a03_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用茶毗法。",
        "from": "X88n1646_023:0224a03_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得舍利千百。",
        "from": "X88n1646_023:0224a03_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大者如芡實。",
        "from": "X88n1646_023:0224a03_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色皆紺碧。",
        "from": "X88n1646_023:0224a04_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至淳熈中甞一還家。",
        "from": "X88n1646_023:0224a04_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "踞上席與家人語化後事甚悉。",
        "from": "X88n1646_023:0224a04_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時其孫不在。",
        "from": "X88n1646_023:0224a05_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及歸則已遠去矣。",
        "from": "X88n1646_023:0224a05_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其弟子有王邦叔者。",
        "from": "X88n1646_023:0224a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從平叔九年。",
        "from": "X88n1646_023:0224a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知入道之要。",
        "from": "X88n1646_023:0224a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日至羅浮觀。",
        "from": "X88n1646_023:0224a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔問曰。",
        "from": "X88n1646_023:0224a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子從我久矣。",
        "from": "X88n1646_023:0224a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不求道何也。",
        "from": "X88n1646_023:0224a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰非敢然也。",
        "from": "X88n1646_023:0224a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自揣愚昧。",
        "from": "X88n1646_023:0224a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐無分耳。",
        "from": "X88n1646_023:0224a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔曰。",
        "from": "X88n1646_023:0224a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噫。",
        "from": "X88n1646_023:0224a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道在我心。",
        "from": "X88n1646_023:0224a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人人有之。",
        "from": "X88n1646_023:0224a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢者不加多。",
        "from": "X88n1646_023:0224a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚者不加少。",
        "from": "X88n1646_023:0224a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如子言。",
        "from": "X88n1646_023:0224a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是自蔽其明也。",
        "from": "X88n1646_023:0224a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可哀也哉。",
        "from": "X88n1646_023:0224a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邦叔涕泗交頤。",
        "from": "X88n1646_023:0224a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拜不能起。",
        "from": "X88n1646_023:0224a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔曰。",
        "from": "X88n1646_023:0224a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子姑退而深思之。",
        "from": "X88n1646_023:0224a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有所覺急來告我。",
        "from": "X88n1646_023:0224a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邦叔辭去。",
        "from": "X88n1646_023:0224a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入室靜思。",
        "from": "X88n1646_023:0224a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至夜。",
        "from": "X88n1646_023:0224a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔往省之。",
        "from": "X88n1646_023:0224a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邦叔啟戶出。",
        "from": "X88n1646_023:0224a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔笑曰。",
        "from": "X88n1646_023:0224a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾一尋汝便見頭面。",
        "from": "X88n1646_023:0224a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝固有之物尋之不得。",
        "from": "X88n1646_023:0224a13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何也。",
        "from": "X88n1646_023:0224a13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂滅所執燭而去。",
        "from": "X88n1646_023:0224a13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邦叔大窘。",
        "from": "X88n1646_023:0224a14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐至五更大悟。",
        "from": "X88n1646_023:0224a14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通體汗流。",
        "from": "X88n1646_023:0224a14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "待旦呈頌曰。",
        "from": "X88n1646_023:0224a14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月照長江風浪息。",
        "from": "X88n1646_023:0224a15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魚龍遁跡水天平。",
        "from": "X88n1646_023:0224a15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "箇中誰唱真仙子。",
        "from": "X88n1646_023:0224a15_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲滿虗空萬籟清。",
        "from": "X88n1646_023:0224a16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔覧之問曰。",
        "from": "X88n1646_023:0224a16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰唱誰聽。",
        "from": "X88n1646_023:0224a16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邦叔再頌曰。",
        "from": "X88n1646_023:0224a17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫問誰。",
        "from": "X88n1646_023:0224a17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫問誰。",
        "from": "X88n1646_023:0224a17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一聲高了一聲低。",
        "from": "X88n1646_023:0224a17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿誰唱。",
        "from": "X88n1646_023:0224a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿誰聽。",
        "from": "X88n1646_023:0224a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫竪大千說不盡。",
        "from": "X88n1646_023:0224a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先生有意度迷津。",
        "from": "X88n1646_023:0224a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急撞靈臺安寶鏡。",
        "from": "X88n1646_023:0224a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏡明澄靜萬緣空。",
        "from": "X88n1646_023:0224a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百萬絲條處處通。",
        "from": "X88n1646_023:0224a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斗轉星移人睡定。",
        "from": "X88n1646_023:0224a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺來紅日正當中。",
        "from": "X88n1646_023:0224a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔遂出金丹圖授之。",
        "from": "X88n1646_023:0224a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止於羅浮。",
        "from": "X88n1646_023:0224a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後三十年坐逝(天台志．悟真篇．青華祕文)。",
        "from": "X88n1646_023:0224a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_023:0224a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世之學仙者往往執幻為真。",
        "from": "X88n1646_023:0224a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從空覓有。",
        "from": "X88n1646_023:0224a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷失真常。",
        "from": "X88n1646_023:0224a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷諸塵劫。",
        "from": "X88n1646_023:0224a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首楞嚴經呵之切矣。",
        "from": "X88n1646_023:0224a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平叔雖志慕金丹。",
        "from": "X88n1646_023:0224a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其所論撰往往契西來大意。",
        "from": "X88n1646_023:0224a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於老氏之徒可謂具正知見者。",
        "from": "X88n1646_023:0224a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予故表而出之。",
        "from": "X88n1646_023:0224b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_023:0224b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予甞略觀其書。",
        "from": "X88n1646_023:0224b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖在佛老門中能真實踐履者。",
        "from": "X88n1646_023:0224b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然以明眼人觀之。",
        "from": "X88n1646_023:0224b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得毋坐在閨閤中做功課者乎。",
        "from": "X88n1646_023:0224b03_4",
        "context_with_next_sentence": false
    }
]