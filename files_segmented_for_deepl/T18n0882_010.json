[
    {
        "source_sentence": "佛說一切如來真實攝大乘現證",
        "from": "T18n0882_010:0373a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧大教王經卷第十",
        "from": "T18n0882_010:0373a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫試光祿卿",
        "from": "T18n0882_010:0373a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師賜紫沙門臣施護等",
        "from": "T18n0882_010:0373a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯",
        "from": "T18n0882_010:0373a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降三世曼拏羅廣大儀軌分第六之二",
        "from": "T18n0882_010:0373a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時具德金剛手菩薩摩訶薩。",
        "from": "T18n0882_010:0373a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其所說鉤召天眾。",
        "from": "T18n0882_010:0373a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入曼拏羅已。",
        "from": "T18n0882_010:0373a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆如大曼拏羅法用次第。",
        "from": "T18n0882_010:0373a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令觀視曼拏羅中。",
        "from": "T18n0882_010:0373a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後為授金剛寶灌頂及標幟已。",
        "from": "T18n0882_010:0373a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來廣為有情作利樂故。",
        "from": "T18n0882_010:0373a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉與一切三界主眾建立金剛灌頂名字。",
        "from": "T18n0882_010:0373a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰大自在天號忿怒金剛。",
        "from": "T18n0882_010:0373a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那羅延天號幻化金剛。",
        "from": "T18n0882_010:0373a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子天號金剛鈴。",
        "from": "T18n0882_010:0373a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵天號寂默金剛。",
        "from": "T18n0882_010:0373a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋天號金剛器仗。",
        "from": "T18n0882_010:0373a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等五。",
        "from": "T18n0882_010:0373a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂明王。",
        "from": "T18n0882_010:0373a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復飛行諸天主眾。",
        "from": "T18n0882_010:0373a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰甘露軍茶利號金剛軍茶利。",
        "from": "T18n0882_010:0373a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月天號金剛光。",
        "from": "T18n0882_010:0373a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大勝杖號金剛杖。",
        "from": "T18n0882_010:0373a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氷誐羅號金剛氷誐羅。",
        "from": "T18n0882_010:0373a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373a19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂忿怒主。",
        "from": "T18n0882_010:0373a20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復虛空行諸天主眾。",
        "from": "T18n0882_010:0373a20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰末度末多號金剛舜拏。",
        "from": "T18n0882_010:0373a21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作甘露號金剛鬘。",
        "from": "T18n0882_010:0373a21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝號金剛愛持。",
        "from": "T18n0882_010:0373a22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝號最勝金剛。",
        "from": "T18n0882_010:0373a22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373a22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂誐拏主。",
        "from": "T18n0882_010:0373a23_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復地居諸天主眾。",
        "from": "T18n0882_010:0373a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰守藏號金剛母娑羅。",
        "from": "T18n0882_010:0373a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風天號金剛風。",
        "from": "T18n0882_010:0373a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火天號金剛火。",
        "from": "T18n0882_010:0373a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱尾囉天號金剛大惡。",
        "from": "T18n0882_010:0373a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂努多主。",
        "from": "T18n0882_010:0373a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復水居諸天主眾。",
        "from": "T18n0882_010:0373a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰嚩囉賀號金剛鉤。",
        "from": "T18n0882_010:0373a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焰摩天號金剛葛羅。",
        "from": "T18n0882_010:0373a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必哩體尾祖梨葛號金剛頻那夜迦。",
        "from": "T18n0882_010:0373a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水天號龍金剛。",
        "from": "T18n0882_010:0373b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂際吒迦主。",
        "from": "T18n0882_010:0373b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次所有彼三界主后及母天眾。",
        "from": "T18n0882_010:0373b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為授金剛寶灌頂及本部標幟金剛加持已。",
        "from": "T18n0882_010:0373b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來為利樂故。",
        "from": "T18n0882_010:0373b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉與建立金剛灌頂名字。",
        "from": "T18n0882_010:0373b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰烏摩天后號忿怒金剛火。",
        "from": "T18n0882_010:0373b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "銀色天后號金剛金色天。",
        "from": "T18n0882_010:0373b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙瑟恥天后號金剛童女天。",
        "from": "T18n0882_010:0373b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵天后號金剛寂靜。",
        "from": "T18n0882_010:0373b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋天后號金剛拳。",
        "from": "T18n0882_010:0373b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等五。",
        "from": "T18n0882_010:0373b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂明妃。",
        "from": "T18n0882_010:0373b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復飛行諸母天眾。",
        "from": "T18n0882_010:0373b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰甘露母天號金剛甘露嚕呬尼母天號金剛光。",
        "from": "T18n0882_010:0373b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持杖母天號金剛火杖。",
        "from": "T18n0882_010:0373b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惹多訶哩尼母天號金剛寶帶。",
        "from": "T18n0882_010:0373b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂忿怒母天。",
        "from": "T18n0882_010:0373b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復虛空行諸母天眾。",
        "from": "T18n0882_010:0373b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰摩哩尼母天號金剛隱沒。",
        "from": "T18n0882_010:0373b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吞伏母天號金剛吞伏。",
        "from": "T18n0882_010:0373b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩舍那母天號金剛自在。",
        "from": "T18n0882_010:0373b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那囉爹母天號金剛愛。",
        "from": "T18n0882_010:0373b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂誐尼迦母天。",
        "from": "T18n0882_010:0373b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復地居諸母天眾。",
        "from": "T18n0882_010:0373b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰寂靜母天號金剛女使。",
        "from": "T18n0882_010:0373b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風母天號速疾金剛。",
        "from": "T18n0882_010:0373b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火母天號熾盛金剛。",
        "from": "T18n0882_010:0373b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱尾梨母天號金剛利。",
        "from": "T18n0882_010:0373b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂女使母天。",
        "from": "T18n0882_010:0373b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復水居諸母天眾。",
        "from": "T18n0882_010:0373b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰嚩囉曳號金剛口。",
        "from": "T18n0882_010:0373b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左捫尼號金剛迦梨。",
        "from": "T18n0882_010:0373b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親那那娑號金剛布單那。",
        "from": "T18n0882_010:0373b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水母天號金剛摩葛哩。",
        "from": "T18n0882_010:0373b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等四。",
        "from": "T18n0882_010:0373b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即金剛灌頂際吒母天。",
        "from": "T18n0882_010:0373b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時具德金剛手菩薩摩訶薩。",
        "from": "T18n0882_010:0373b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為彼等一切天眾入曼拏羅者。",
        "from": "T18n0882_010:0373b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教授諸佛大智一切印契。",
        "from": "T18n0882_010:0373b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及授金剛三昧誓心。",
        "from": "T18n0882_010:0373b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此金剛杵大金剛　　為一切佛所加持　若有越此三昧者　　速壞本族如灰燼大明曰。",
        "from": "T18n0882_010:0373b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)喝那三摩野吽(引)發吒(半音一句)次授攝心大印。",
        "from": "T18n0882_010:0373c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二手當結金剛印　　相結二頭指如鉤　猶如繫鬘撚箭勢　　有所為事隨心欲　是印安於汝心前　　安已一切事成就　得此三昧勿違越　　無令破壞於身命　堅固復結金剛縛　　曲二頭指而宛轉　復以二大指相合　　後二中指相逼附　此即金剛大持明　　大縛三昧祕密印　汝此三昧不應破　　破者即得違越罪　二手應結金剛印　　次以二小指相結　背屈二大指入中　　旋轉頭上而安置　今此大士三昧印　　謂即金剛持明縛　若作忿怒觀視時　　隨應安置於彼前　堅固應結金剛護　　作金剛縛而相逼　此即地行三昧印　　一切有情現護者　若或為作救護事　　應以忿怒縛相合　隨欲救護諸有情　　當以此印安其背　二手先結金剛印　　左手金剛頭指逼　如撚箭勢次作已　　小指如鎖即成印　若有忿怒事起已　　以此三昧當作用　是印隨應安彼前　　即得一切勝成就　二手先結金剛縛　　次以二頭指堅固　中指大指面相合　　此即金剛安立印　是印旋轉當於額　　安已隨應作鉤召　若欲救令活命時　　此印即安於彼前次說普盡三界攝心三昧。",
        "from": "T18n0882_010:0373c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸印。",
        "from": "T18n0882_010:0373c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所用大明曰。",
        "from": "T18n0882_010:0373c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩里都(引)捺嚩(二合)里多嚩日囉(二合引)葛哩沙(二合)野吽(引)[口*弱](一句)即此亦是繫鬘金剛印。",
        "from": "T18n0882_010:0374a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母天鉤召大明。",
        "from": "T18n0882_010:0374a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽(引)嚩日囉(二合引)屹囉(二合)閉(引)拏野三摩野吽(引一句)此是虛空行母天大明。",
        "from": "T18n0882_010:0374a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)摩(引)囉(引)屹囉(二合)鑁(一句)此是持鬘母天大明。",
        "from": "T18n0882_010:0374a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)滿馱[亢*欠](一句)此是地居母天大明。",
        "from": "T18n0882_010:0374a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)播(引)多(引)羅(一句)伴惹伴惹(二)吽(引)發吒(半音三)此是水居母天大明。",
        "from": "T18n0882_010:0374a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)呬(引)嚕(引)葛嚩日囉(二合)三摩野(一句)薩哩嚩(二合)訥瑟吒(二合)三摩野母捺囉(二合引)伴惹葛吽(引)發吒(半音)(二)此是一切母天眾大明。",
        "from": "T18n0882_010:0374a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時具德金剛手菩薩摩訶薩。",
        "from": "T18n0882_010:0374a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊我已調伏一切惡者。",
        "from": "T18n0882_010:0374a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來已為建立灌頂名字。",
        "from": "T18n0882_010:0374a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉世尊。",
        "from": "T18n0882_010:0374a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復授我教令。",
        "from": "T18n0882_010:0374a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此諸惡者。",
        "from": "T18n0882_010:0374a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所結曼拏羅。",
        "from": "T18n0882_010:0374a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當云何行。",
        "from": "T18n0882_010:0374a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊聞是語已。",
        "from": "T18n0882_010:0374a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說大明曰。",
        "from": "T18n0882_010:0374a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)遜婆儞遜婆吽(引)發吒(半音一句)時金剛手大菩薩。",
        "from": "T18n0882_010:0374a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣為救拔利樂一切有情故。",
        "from": "T18n0882_010:0374a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此一切曼拏羅鉤召大明曰。",
        "from": "T18n0882_010:0374a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)三摩野(引)葛哩沙(二合)野薩哩嚩(二合)曼拏囕(引一句)嚩日囉(二合)達囉薩玷(二)摩(引)底訖囉(二合)摩吽(引)發吒(半音三)如是大明所用印契。",
        "from": "T18n0882_010:0374a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二手當作金剛鉤　　是印於心作旋轉　復二頭指外如鉤　　最上鉤召曼拏羅說是印明時。",
        "from": "T18n0882_010:0374b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切曼拏羅眾。",
        "from": "T18n0882_010:0374b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤召悉集須彌山頂。",
        "from": "T18n0882_010:0374b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周匝而住。",
        "from": "T18n0882_010:0374b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手大菩薩。",
        "from": "T18n0882_010:0374b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普告諸曼拏羅彼眾會言。",
        "from": "T18n0882_010:0374b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸聖者汝等當行永不殺生。",
        "from": "T18n0882_010:0374b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以三昧攝受於汝。",
        "from": "T18n0882_010:0374b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時外曼拏羅諸有情等。",
        "from": "T18n0882_010:0374b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是白言。",
        "from": "T18n0882_010:0374b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士我等諸惡有情。",
        "from": "T18n0882_010:0374b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以食肉而為活命。",
        "from": "T18n0882_010:0374b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大士教勅。",
        "from": "T18n0882_010:0374b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我命云何得存活邪。",
        "from": "T18n0882_010:0374b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛手大菩薩。",
        "from": "T18n0882_010:0374b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說極惡金剛忿怒大明曰。",
        "from": "T18n0882_010:0374b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)訥瑟吒(二合)嚩日囉(二合)骨嚕(二合引)馱(一句)喝那(二)捺喝(三)鉢左(四)尾搏(引)娑野(五)尾計囉薩哩嚩(二合)訥瑟吒(二合)三摩野母捺囉(二合引)曼拏囕(引)(六)伴惹伴惹(七)摩哩那(二合)摩哩那(二合)(八)珂(引)那珂(引)那(九)波囉滿怛囉(二合引)嚩日囉(二合)三摩野吽(引)發吒(半音十)如是大明所用印契。",
        "from": "T18n0882_010:0374b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　齊豎金剛忿怒指　　復以諸指甲相合　指面相合亦堅固　　是印能調諸惡者說是印明時。",
        "from": "T18n0882_010:0374b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切極惡曼拏羅眾。",
        "from": "T18n0882_010:0374b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合為一聚。",
        "from": "T18n0882_010:0374b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將起種種破散之相。",
        "from": "T18n0882_010:0374b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼本部三昧亦破。",
        "from": "T18n0882_010:0374b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸有情心如燒煮。",
        "from": "T18n0882_010:0374b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極大逼迫發大號叫苦惱之聲。",
        "from": "T18n0882_010:0374b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向具德執金剛者前。",
        "from": "T18n0882_010:0374b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌白言。",
        "from": "T18n0882_010:0374b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士願救護我願救護我。",
        "from": "T18n0882_010:0374b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我命將終勿以見棄。",
        "from": "T18n0882_010:0374b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時具德金剛手菩薩摩訶薩白佛言。",
        "from": "T18n0882_010:0374b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如是極惡曼拏羅眾。",
        "from": "T18n0882_010:0374b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我復令彼當云何行。",
        "from": "T18n0882_010:0374b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊授我教令。",
        "from": "T18n0882_010:0374b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T18n0882_010:0374c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說大明曰。",
        "from": "T18n0882_010:0374c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)儞遜婆(一句)喝那(二)捺喝(三)鉢左(四)屹哩(二合)恨拏(二合)滿駄吽(引)發吒(半音五)時金剛手大菩薩。",
        "from": "T18n0882_010:0374c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說金剛暴怒大明曰。",
        "from": "T18n0882_010:0374c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)摩賀(引)嚩日囉(二合)骨嚕(二合)囉骨嚕(二合引)唐播(引)多野(一句)薩哩囉(二合)訥瑟吒(二合)三摩野曼拏囕(引)(二)尾那(引)舍野(三)薩哩嚩(二合)訥瑟吒(二合)三摩焬(引)尾計囉尾摶娑野尾塞普(二合引)吒野(四)伴惹伴惹(五)薩哩嚩(二合)訥瑟吒(二合)三摩野母捺囉(二合引)滿唐(引)屹哩(二合)恨拏(二合)(六)喝那(七)捺喝(八)鉢左(九)薩哩嚩(二合)訥瑟吒(二合)三摩野薩怛網(二合引)嚩日囉(二合)三摩野吽(引)發吒(半音十)說是大明時。",
        "from": "T18n0882_010:0374c05_0",
