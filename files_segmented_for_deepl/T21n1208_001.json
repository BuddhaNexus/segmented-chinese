[
    {
        "source_sentence": "俱力迦羅龍王儀軌",
        "from": "T21n1208_001:0038c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛智三藏",
        "from": "T21n1208_001:0038c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為此具最上利根人現身也。",
        "from": "T21n1208_001:0038c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為繫持念行者必可現形。",
        "from": "T21n1208_001:0038c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為大日如來因位三毒煩惱行相而已。",
        "from": "T21n1208_001:0038c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大日如來金剛忿怒力士諸天等。",
        "from": "T21n1208_001:0038c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我行者現忿怒龍王身。",
        "from": "T21n1208_001:0038c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏彼之三毒煩惱。",
        "from": "T21n1208_001:0038c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離三途輪迴苦業。",
        "from": "T21n1208_001:0038c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此故可說我祕密呪。",
        "from": "T21n1208_001:0038c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1208_001:0038c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次俱力迦羅龍王現身印真言。",
        "from": "T21n1208_001:0038c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手作忿怒奉舉二肩。",
        "from": "T21n1208_001:0038c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1208_001:0038c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次俱迦龍王不動明王真言印。",
        "from": "T21n1208_001:0038c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手金剛合掌。",
        "from": "T21n1208_001:0038c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二火二空開散。",
        "from": "T21n1208_001:0038c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指入掌中。",
        "from": "T21n1208_001:0038c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。",
        "from": "T21n1208_001:0038c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心中心印。",
        "from": "T21n1208_001:0038c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內縛二水二火開散。",
        "from": "T21n1208_001:0038c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心中心真言曰。",
        "from": "T21n1208_001:0038c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動如來大日如來龍王現身根本真言誦此真言。",
        "from": "T21n1208_001:0039a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必現身往生十方淨土。",
        "from": "T21n1208_001:0039a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若拜尊容。",
        "from": "T21n1208_001:0039a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至阿耨菩提終不墮三惡趣。",
        "from": "T21n1208_001:0039a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此龍王火光三昧神通也。",
        "from": "T21n1208_001:0039a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火天者此彼四智所語故。",
        "from": "T21n1208_001:0039a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火天聖者火光三昧赫奕光明皆此火天身。",
        "from": "T21n1208_001:0039a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能可念此龍王不思議神力。",
        "from": "T21n1208_001:0039a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只有此法觀本生法變大日成不動變不動成劍之上相 字返成龍王。",
        "from": "T21n1208_001:0039a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右無名小指掌內相叉。",
        "from": "T21n1208_001:0039a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指直立相跓。",
        "from": "T21n1208_001:0039a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二食指跓中指背上節。",
        "from": "T21n1208_001:0039a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指小曲各柱二食指內中節來去。",
        "from": "T21n1208_001:0039a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多勃馱南俱里迦耶迦羅惹銘伽扇儞曳娑婆訶次俱力迦羅龍王密修真言印。",
        "from": "T21n1208_001:0039a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內縛二中指。",
        "from": "T21n1208_001:0039a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指開散(此密印也)。",
        "from": "T21n1208_001:0039a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次俱力迦羅變身印真言(大日如來也)。",
        "from": "T21n1208_001:0039a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌。",
        "from": "T21n1208_001:0039a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二風二空端相著。",
        "from": "T21n1208_001:0039a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二水開立。",
        "from": "T21n1208_001:0039a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1208_001:0039a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金剛體身真言印。",
        "from": "T21n1208_001:0039a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵唅吽嚩日囉麼曳縛日羅",
        "from": "T21n1208_001:0039a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次海三昧印真言。",
        "from": "T21n1208_001:0039a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵縛曰赦     ",
        "from": "T21n1208_001:0039a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次常住火光三昧印真言曰。",
        "from": "T21n1208_001:0039a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵拔折羅赦悍    ",
        "from": "T21n1208_001:0039a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行者恒繫此俱力迦龍王念。",
        "from": "T21n1208_001:0039b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然成護摩火光三昧。",
        "from": "T21n1208_001:0039b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四臂明王皆此龍王用力常布行人身上阿字有其中劍遍含五字 。",
        "from": "T21n1208_001:0039b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍體成無動尊金剛身。",
        "from": "T21n1208_001:0039b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已誦一字真言。",
        "from": "T21n1208_001:0039b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫三曼多嚩日羅赦憾",
        "from": "T21n1208_001:0039b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金迦羅印真言(釋迦此也)。",
        "from": "T21n1208_001:0039b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印二手金剛合掌。",
        "from": "T21n1208_001:0039b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指二大指入掌中即成真言。",
        "from": "T21n1208_001:0039b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵金迦羅那嚩日羅 ",
        "from": "T21n1208_001:0039b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誓陀迦印真言。",
        "from": "T21n1208_001:0039b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內縛。",
        "from": "T21n1208_001:0039b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二地二風開散小曲相成。",
        "from": "T21n1208_001:0039b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉赦吽栖陀迦野娑婆賀",
        "from": "T21n1208_001:0039b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次蓮花吉祥印真言(觀音是也部主)。",
        "from": "T21n1208_001:0039b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽合掌。",
        "from": "T21n1208_001:0039b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二水二風內相叉。",
        "from": "T21n1208_001:0039b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三曼多縛日羅赦吽吽憾曳陀羅野莎呵此四使者加不動成五使者。",
        "from": "T21n1208_001:0039b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大日如來五智成身此也。",
        "from": "T21n1208_001:0039b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱力迦羅儀軌",
        "from": "T21n1208_001:0039b18_0",
        "context_with_next_sentence": false
    }
]