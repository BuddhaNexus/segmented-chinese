[
    {
        "source_sentence": "佛說聖最上燈明如來陀羅尼",
        "from": "T21n1355_001:0872b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經",
        "from": "T21n1355_001:0872b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天北印度烏填曩國帝釋宮寺",
        "from": "T21n1355_001:0872b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏傳法大師賜紫沙門臣施護",
        "from": "T21n1355_001:0872b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉　詔譯",
        "from": "T21n1355_001:0872b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1355_001:0872b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T21n1355_001:0872b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾千二百五十人俱。",
        "from": "T21n1355_001:0872b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及百千無央數人天菩薩之眾。",
        "from": "T21n1355_001:0872b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬圍遶而為說法。",
        "from": "T21n1355_001:0872c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時百千俱胝佛剎皆往詣。",
        "from": "T21n1355_001:0872c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無邊花世界。",
        "from": "T21n1355_001:0872c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上燈明如來應正等覺。",
        "from": "T21n1355_001:0872c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現身住止經行說法。",
        "from": "T21n1355_001:0872c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有二菩薩。",
        "from": "T21n1355_001:0872c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名大光明二名無量光。",
        "from": "T21n1355_001:0872c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼佛遣二菩薩。",
        "from": "T21n1355_001:0872c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往娑訶世界祇樹給孤獨園。",
        "from": "T21n1355_001:0872c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣釋迦如來正遍知覺所。",
        "from": "T21n1355_001:0872c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到已頭面禮世尊足而坐一面。",
        "from": "T21n1355_001:0872c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼二菩薩白世尊言。",
        "from": "T21n1355_001:0872c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去此佛土經行百千俱胝佛剎。",
        "from": "T21n1355_001:0872c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有世界名無邊花。",
        "from": "T21n1355_001:0872c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼土有佛。",
        "from": "T21n1355_001:0872c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名最上燈明如來應供正遍知。",
        "from": "T21n1355_001:0872c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現住其中恒說妙法。",
        "from": "T21n1355_001:0872c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼世尊最上燈明如來正遍知覺故。",
        "from": "T21n1355_001:0872c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣我等詣娑訶世界。",
        "from": "T21n1355_001:0872c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問訊世尊少病少惱。",
        "from": "T21n1355_001:0872c11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何氣力輕利安住快樂。",
        "from": "T21n1355_001:0872c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼如是說。",
        "from": "T21n1355_001:0872c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此所有人非人。",
        "from": "T21n1355_001:0872c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部多毘舍佐藥叉羅剎。",
        "from": "T21n1355_001:0872c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供盤茶供盤茶軍主。",
        "from": "T21n1355_001:0872c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王法盜賊。",
        "from": "T21n1355_001:0872c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇蝎惡瘡蟲蟻羯拏怖嚩蟲。",
        "from": "T21n1355_001:0872c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等類擾亂煩惱故。",
        "from": "T21n1355_001:0872c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼世尊最上燈明如來應供正遍知。",
        "from": "T21n1355_001:0872c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼真言章句。",
        "from": "T21n1355_001:0872c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名聞十方故遣來此。",
        "from": "T21n1355_001:0872c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益安樂一切眾生。",
        "from": "T21n1355_001:0872c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏貌怡悅色相具足身意泰然。",
        "from": "T21n1355_001:0872c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此祕密功德力故擁護有情。",
        "from": "T21n1355_001:0872c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1355_001:0872c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去一引)入嚩(二合引)禮(二)入嚩(二合引)攞孽帝(三)呼迦穆迦(四)三(去)麼帝麼賀(引五)三(去)麼帝(六)麼賀(引)入嚩(二合引)禮(七)入嚩(二合引)攞銘(八)薩呬薩禮(九)麼賀(引)入嚩(二合引)禮(十)塢計蘇計(十一)多銘三麼帝(十二)麼賀(引)三麼帝(十三)麼賀(引)三銘(十四)娑嚩(二合引)賀(引十五)爾時世尊告尊者阿難言。",
        "from": "T21n1355_001:0872c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1355_001:0872c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼章句甚為難得。",
        "from": "T21n1355_001:0872c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦為他解說。",
        "from": "T21n1355_001:0872c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此阿牟尼陀羅尼。",
        "from": "T21n1355_001:0872c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出世時亦難得遇。",
        "from": "T21n1355_001:0872c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有族姓男族姓女。",
        "from": "T21n1355_001:0872c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽聞受持為他解說。",
        "from": "T21n1355_001:0872c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命通見彼七生之中宿命之事。",
        "from": "T21n1355_001:0872c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱皆悉消除。",
        "from": "T21n1355_001:0873a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿業而皆不受。",
        "from": "T21n1355_001:0873a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀。",
        "from": "T21n1355_001:0873a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼真言章句。",
        "from": "T21n1355_001:0873a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七十七俱胝佛同共宣說。",
        "from": "T21n1355_001:0873a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切有情。",
        "from": "T21n1355_001:0873a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼章句不信毀謗者。",
        "from": "T21n1355_001:0873a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即同毀謗七十七俱胝佛。",
        "from": "T21n1355_001:0873a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無能勝菩薩摩訶薩。",
        "from": "T21n1355_001:0873a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從坐起偏袒右肩右膝著地。",
        "from": "T21n1355_001:0873a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛白佛言。",
        "from": "T21n1355_001:0873a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我亦宣說陀羅尼真言章句。",
        "from": "T21n1355_001:0873a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益安樂諸眾生故。",
        "from": "T21n1355_001:0873a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此祕密擁護有情。",
        "from": "T21n1355_001:0873a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長殊勝福力色相怡悅故。",
        "from": "T21n1355_001:0873a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1355_001:0873a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(去引)阿跓(摘固反)嚩跓(准上切一)曩跓(亦准上)麼賀(引)矩曩跓(亦准上二)阿乞嚩(二合)枲迦枲(三)阿曩(引)迦枲(四)麼曩迦枲(五)阿拏(拏固反)哆(六)佉祖(引)麼賀(引)佉祖(七)薩嬭(奴賈反)契哆嬭(准上七切)契(八)哆嚕銘(九)咄嚕銘(十)醯禮蜜禮底禮(十一)娑嚩(二合引)賀(十二引)爾時世尊告尊者阿難陀言。",
        "from": "T21n1355_001:0873a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1355_001:0873a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此摩尼陀羅尼章句甚為希有。",
        "from": "T21n1355_001:0873a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當受持讀誦為他解說。",
