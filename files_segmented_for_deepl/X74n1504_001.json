[
    {
        "source_sentence": " 集南山禮讚序",
        "from": "X74n1504_001:1078a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘杭沙門釋　元照　述",
        "from": "X74n1504_001:1078a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾祖聖師。",
        "from": "X74n1504_001:1078a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛績懿業備載于李邕行狀．嚴原本碑．大宋高僧傳。",
        "from": "X74n1504_001:1078a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後賢多採為讚頌。",
        "from": "X74n1504_001:1078a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每至齋忌廣列供養。",
        "from": "X74n1504_001:1078a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌而詠之以申哀慕之素。",
        "from": "X74n1504_001:1078a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其來久矣。",
        "from": "X74n1504_001:1078a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔孤山法師首事秉筆。",
        "from": "X74n1504_001:1078a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "葢酬兜率擇梧律師之請。",
        "from": "X74n1504_001:1078a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其次霅谿法師患其事儀尚闕音韻。",
        "from": "X74n1504_001:1078a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有所未便。",
        "from": "X74n1504_001:1078a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼有作焉。",
        "from": "X74n1504_001:1078a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台真悟律師兼而用之。",
        "from": "X74n1504_001:1078a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以謂歌之不足。",
        "from": "X74n1504_001:1078a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃復操染。",
        "from": "X74n1504_001:1078a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用擬三日。",
        "from": "X74n1504_001:1078a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第間行。",
        "from": "X74n1504_001:1078a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是三本傳世。",
        "from": "X74n1504_001:1078a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂金璧爭輝蘭菊擅美。",
        "from": "X74n1504_001:1078a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後世雖有作者。",
        "from": "X74n1504_001:1078a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而才識辭翰不足以亞焉。",
        "from": "X74n1504_001:1078a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故所不錄矣。",
        "from": "X74n1504_001:1078a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然據諸傳錄考校是非。",
        "from": "X74n1504_001:1078a13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或辭理未安。",
        "from": "X74n1504_001:1078a14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或軌儀有闕。",
        "from": "X74n1504_001:1078a14_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竝為加改。",
        "from": "X74n1504_001:1078a14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且使後學無惑於兩岐焉。",
        "from": "X74n1504_001:1078a15_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞試思之。",
        "from": "X74n1504_001:1078a15_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛化東傳。",
        "from": "X74n1504_001:1078a15_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四依弘闡者頗眾。",
        "from": "X74n1504_001:1078a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖行業著聞。",
        "from": "X74n1504_001:1078a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一文一讚足以稱之。",
        "from": "X74n1504_001:1078a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨吾祖雖讚詠者殆至數家。",
        "from": "X74n1504_001:1078a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒未能盡其美。",
        "from": "X74n1504_001:1078a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有以見道高德遠。",
        "from": "X74n1504_001:1078a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功深行密。",
        "from": "X74n1504_001:1078a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非常情思議所及矣。",
        "from": "X74n1504_001:1078a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同宗學者尚不能稟訓脩身。",
        "from": "X74n1504_001:1078a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想德追遠耶。",
        "from": "X74n1504_001:1078a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元符三年祖忌日序南山祖師禮讚文孤山沙門釋　智圓　述竊以子產遺愛。",
        "from": "X74n1504_001:1078a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼父攸稱。",
        "from": "X74n1504_001:1078b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召伯耳棠。",
        "from": "X74n1504_001:1078b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詩人發詠。",
        "from": "X74n1504_001:1078b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況乎南山教主澄照大師立事立言。",
        "from": "X74n1504_001:1078b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大闡毗尼之學。",
        "from": "X74n1504_001:1078b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無偏無黨恭行法密之宗。",
        "from": "X74n1504_001:1078b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "□夫離犯成持。",
        "from": "X74n1504_001:1078b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從凡入聖。",
        "from": "X74n1504_001:1078b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生我慧命。",
        "from": "X74n1504_001:1078b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "育我法身。",
        "from": "X74n1504_001:1078b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有茲罔極之恩。",
        "from": "X74n1504_001:1078b09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧捨爾思之道。",
        "from": "X74n1504_001:1078b09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則俯臨諱日。",
        "from": "X74n1504_001:1078b09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緬想慈風。",
        "from": "X74n1504_001:1078b10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立身揚名。",
        "from": "X74n1504_001:1078b10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愧乏古賢之美。",
        "from": "X74n1504_001:1078b10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎終追遠。",
        "from": "X74n1504_001:1078b10_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶同孝子之心。",
        "from": "X74n1504_001:1078b11_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是略展香華。",
        "from": "X74n1504_001:1078b11_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊陳蘋藻。",
        "from": "X74n1504_001:1078b11_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受福匪齊於禴祭。",
        "from": "X74n1504_001:1078b11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薦神實類於潢汙。",
        "from": "X74n1504_001:1078b12_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而乃輙吐蕪辭。",
        "from": "X74n1504_001:1078b12_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用歌遺烈。",
        "from": "X74n1504_001:1078b12_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百獸率舞雖喻微躬。",
        "from": "X74n1504_001:1078b13_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛德形容安能盡詠。",
        "from": "X74n1504_001:1078b13_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶幾慈眼。",
        "from": "X74n1504_001:1078b13_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密照他心。",
        "from": "X74n1504_001:1078b14_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來降道場。",
        "from": "X74n1504_001:1078b14_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受茲供養。",
        "from": "X74n1504_001:1078b14_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請南山教主澄照大師。",
        "from": "X74n1504_001:1078b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟願降臨道場受我供養(三徧請已。",
        "from": "X74n1504_001:1078b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同聲稱讚。",
        "from": "X74n1504_001:1078b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下同)。",
        "from": "X74n1504_001:1078b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代有覺人。",
        "from": "X74n1504_001:1078b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為如來使。",
        "from": "X74n1504_001:1078b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍魔歸降。",
        "from": "X74n1504_001:1078b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "岳神奉事。",
        "from": "X74n1504_001:1078b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲飛五天。",
        "from": "X74n1504_001:1078b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭驚萬古。",
        "from": "X74n1504_001:1078b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金烏西沉。",
        "from": "X74n1504_001:1078b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛日東舉。",
        "from": "X74n1504_001:1078b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸依。",
        "from": "X74n1504_001:1078b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肇律宗主。",
        "from": "X74n1504_001:1078b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(至此。",
        "from": "X74n1504_001:1078b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或陳敘。",
        "from": "X74n1504_001:1078b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或讀疏。",
        "from": "X74n1504_001:1078b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱祖師名。",
        "from": "X74n1504_001:1078b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下同)。",
        "from": "X74n1504_001:1078b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮應機示跡誕靈京輦時身南山尊者。",
        "from": "X74n1504_001:1078b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(下皆倣此)　明月貫懷彰吉夢　　支那誕質異常童　岐嶷雖居積善家　　融明潛悟無生理　六經洞曉微音遠　　三藏淹通內證深　美哉應以律師身　　即現律師而演律　故我一心歸命頂禮(下皆倣之)一心頂禮弘慈乖範隱居撰鈔時身。",
        "from": "X74n1504_001:1078b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　肥遁終南揚律藏　　刪繁補闕異羣宗　雄詞粲粲鬬朝霞　　奧義明明敵秋月　五乘軌導躋夷徑　　三寶舟航偶迅風　執文行事匪憑虗　　歷代重之為大訓一心頂禮聲飛中表王臣欽奉時身。",
        "from": "X74n1504_001:1078c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　秉持聲譽傳天竺　　德業清高動紫震　弉師西至詔翻經　　無畏東來願依止　圖容顯慶光遺烈　　贈號咸通振後塵　帝王崇仰異方師　　天下歸仁實希有一心頂禮維持像教重編僧史時身。",
        "from": "X74n1504_001:1078c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　操觚染翰編聯眾　　紀錄高僧功最深　屬辭比事敘羣賢　　懲惡勸善垂來世　緇侶咸欽史遷筆　　鴻儒悉仰董狐才　後昆披閱盡思齊　　能使真風無墜地一心頂禮克期進業常行在定時身。",
        "from": "X74n1504_001:1078c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　般舟三昧勤修習　　戾止清官古寺深　九旬精進息諸緣　　萬境銷融歸一念　聲傳遠谷晴時磬　　燼落秋堂雨夜燈　羣龍禮謁變人形　　改惡悛心咸攝毒一心頂禮人天歸仰幽靈顯瑞時身。",
        "from": "X74n1504_001:1078c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隱居沁部天童侍　　行道西明太子隨　律相冥同聖者談　　佛牙潛自那吒授　白泉瀲灔神人指　　倣掌幽閑猛獸馴　如斯奇瑞世希聞　　盛德巍巍懸日月一心頂禮開基選勝築壇重受時身。",
        "from": "X74n1504_001:1078c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　發揮像教超前古　　爰向神州築寶壇　巍巍五級鎮金園　　肅肅四隅列天主　規模應法那含禮　　締構成功賓度來　躋陞納戒法身全　　二眾于今咸受賜一心頂禮報終化滿遷神內院時身。",
        "from": "X74n1504_001:1079a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　閻浮提國緣將謝　　覩支陀宮果欲圓　天人先獻棘林香　　安坐尋終京輦寺　空華不實從生滅　　水月無心任去來　對揚慈氏繼波離　　願見下生談律藏至心懺悔(執爐同聲思過乞懺。",
        "from": "X74n1504_001:1079a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下同)　我輩自從無始劫　　一迷真淨作塵勞　循環諸有受微形　　經歷多生嬰眾苦　愛河浩浩都忘返　　朽宅炎炎不畏焚　偶生人道具諸根　　獲廁玄門參五眾　祝髮壞衣殊外俗　　登壇稟戒等塵沙　內無高志慕超昇　　外逐塵緣甘下劣　善根微薄隨時失　　惡習纏綿觸境生　浮囊全與阻長川　　車軸俱摧當險道　腐爛若為堪信施　　麤疎殊未合真規　何啻癡猿得樹枝　　更逾渴鹿奔陽焰　業性如空雖叵得　　苦緣相會必無差　一失人身不可追　　永沉異趣何由出　每念死生懷恐懼　　敢傾肝膽盡披陳　曩劫今生一切時　　六根三業無邊罪　仰對聖慈俱懺悔　　即同霜雪頓消鎔　重性輕遮誓秉持　　深禪玅慧期開悟　三行雄文因習學　　一乘實道始知歸　半偈遺身事可聞　　千生粉骨恩難報　力荷真乘光佛化　　重扶彛範整僧宗　三聚圓修趣涅槃　　四生盡導歸安養　大虗尚可窮邊際　　我誓終當不動移　更希護念賜冥加　　庶乎願行皆成就懺悔已。",
        "from": "X74n1504_001:1079a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心歸命頂禮。",
        "from": "X74n1504_001:1079b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右孤山法師讚。",
        "from": "X74n1504_001:1079b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元作羅漢禮請之聲。",
        "from": "X74n1504_001:1079b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前無歎德。",
        "from": "X74n1504_001:1079b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後懺悔止有四句。",
        "from": "X74n1504_001:1079b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今將唐穆宗真讚并自作懺願偈補之。",
        "from": "X74n1504_001:1079b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗有倫序。",
        "from": "X74n1504_001:1079b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六章按李邕行狀。",
        "from": "X74n1504_001:1079b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛牙乃天神捷疾所獻。",
        "from": "X74n1504_001:1079b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那吒但隨侍而已。",
        "from": "X74n1504_001:1079b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有它文指那吒者。",
        "from": "X74n1504_001:1079b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故且存焉。",
        "from": "X74n1504_001:1079b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後霅溪讚亦循舊說。",
        "from": "X74n1504_001:1079b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失考行狀故也。",
        "from": "X74n1504_001:1079b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南山祖師禮讚文",
        "from": "X74n1504_001:1079b20_0",
        "context_with_next_sentence": false
    }
]