[
    {
        "source_sentence": "大般涅槃經集解卷第三十四",
        "from": "T37n1763_034:0491b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　破外道所執義　釋更轉法輪義",
        "from": "T37n1763_034:0491b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖行品之第八",
        "from": "T37n1763_034:0491b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子諸行無我(至)以是義故定知無我。",
        "from": "T37n1763_034:0491b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0491b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專念憶想。",
        "from": "T37n1763_034:0491b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是證常家。",
        "from": "T37n1763_034:0491b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三第四事也。",
        "from": "T37n1763_034:0491b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常即自在。",
        "from": "T37n1763_034:0491b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以兼破。",
        "from": "T37n1763_034:0491b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子若諸外道(至)如來如是真實有我。",
        "from": "T37n1763_034:0491b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0491b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計我之六事也。",
        "from": "T37n1763_034:0491b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根和合。",
        "from": "T37n1763_034:0491b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是假名我。",
        "from": "T37n1763_034:0491b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假名但名家稱名也。",
        "from": "T37n1763_034:0491b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子若諸外道(至)以是義故定知無我。",
        "from": "T37n1763_034:0491b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0491b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通破第一第二事。",
        "from": "T37n1763_034:0491b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以口涎破第四事也。",
        "from": "T37n1763_034:0491b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子是諸外道癡如小兒(至)有真實諦非於外道。",
        "from": "T37n1763_034:0491c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0491c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我名本在佛地也。",
        "from": "T37n1763_034:0491c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道不識得少許分故。",
        "from": "T37n1763_034:0491c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄計諸行為我。",
        "from": "T37n1763_034:0491c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如生盲不見色。",
        "from": "T37n1763_034:0491c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說色語之。",
        "from": "T37n1763_034:0491c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯以已之所解為色。",
        "from": "T37n1763_034:0491c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不得色之相。",
        "from": "T37n1763_034:0491c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利白佛言世尊(至)乃作如是分別真諦。",
        "from": "T37n1763_034:0491c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0491c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四諦二諦。",
        "from": "T37n1763_034:0491c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔來凡是廣說。",
        "from": "T37n1763_034:0491c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯示應迹。",
        "from": "T37n1763_034:0491c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似乖將欲會之故也。",
        "from": "T37n1763_034:0491c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_034:0491c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞上廣說四諦真實之義。",
        "from": "T37n1763_034:0491c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎今說實諦。",
        "from": "T37n1763_034:0491c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於昔鹿苑。",
        "from": "T37n1763_034:0491c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為更轉也。",
        "from": "T37n1763_034:0491c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0491c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三重明慧。",
        "from": "T37n1763_034:0491c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮理盡性。",
        "from": "T37n1763_034:0491c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖行已畢。",
        "from": "T37n1763_034:0491c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉取時眾之心。",
        "from": "T37n1763_034:0491c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假為不達因。",
        "from": "T37n1763_034:0491c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以盡疑也。",
        "from": "T37n1763_034:0491c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_034:0491c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一品之中。",
        "from": "T37n1763_034:0491c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四遣執明慧也。",
        "from": "T37n1763_034:0491c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於緣中。",
        "from": "T37n1763_034:0491c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛心屬法。",
        "from": "T37n1763_034:0491c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則成智慧用也。",
        "from": "T37n1763_034:0491c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊一問。",
        "from": "T37n1763_034:0491c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成有三過。",
        "from": "T37n1763_034:0491c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一謂如來實涅槃。",
        "from": "T37n1763_034:0491c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二云佛作心轉法輪。",
        "from": "T37n1763_034:0491c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三謂更轉也。",
        "from": "T37n1763_034:0491c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告文殊師利汝今云何(至)常住不變不般涅槃。",
        "from": "T37n1763_034:0491c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0491c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉法輪者。",
        "from": "T37n1763_034:0491c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂所說之法。",
        "from": "T37n1763_034:0491c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令聽悟解。",
        "from": "T37n1763_034:0491c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為轉也。",
        "from": "T37n1763_034:0491c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解以摧惑。",
        "from": "T37n1763_034:0491c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為輪也。",
        "from": "T37n1763_034:0491c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛有說。",
        "from": "T37n1763_034:0491c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則是有為有盡。",
        "from": "T37n1763_034:0491c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名涅槃。",
        "from": "T37n1763_034:0491c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今無說而物聞。",
        "from": "T37n1763_034:0491c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不滅而人自滅。",
        "from": "T37n1763_034:0491c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言不涅槃也。",
        "from": "T37n1763_034:0491c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0491c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑有三意。",
        "from": "T37n1763_034:0491c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此釋第一意也。",
        "from": "T37n1763_034:0491c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若有計我是佛(至)如來方便轉於法輪。",
        "from": "T37n1763_034:0491c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0491c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下釋不轉有二意。",
        "from": "T37n1763_034:0491c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一以不轉說轉。",
        "from": "T37n1763_034:0491c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二就迹應有轉也。",
        "from": "T37n1763_034:0491c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第一意。",
        "from": "T37n1763_034:0491c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不轉說轉也。",
        "from": "T37n1763_034:0491c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0491c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋不轉有三重。",
        "from": "T37n1763_034:0491c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一極處無轉。",
        "from": "T37n1763_034:0491c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二應故有轉。",
        "from": "T37n1763_034:0491c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三顯極處相。",
        "from": "T37n1763_034:0491c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如虛空也。",
        "from": "T37n1763_034:0491c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子譬如因眼緣色緣明(至)非諸聲聞緣覺所知。",
        "from": "T37n1763_034:0491c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0491c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0491c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明有轉之。",
        "from": "T37n1763_034:0491c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義緣有應接之因也。",
        "from": "T37n1763_034:0491c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子亦爾非生非出(至)非作非造非有為法。",
        "from": "T37n1763_034:0492a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明極地無心於轉。",
        "from": "T37n1763_034:0492a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼虛空也。",
        "from": "T37n1763_034:0492a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子諸佛世尊語有二種(至)為諸菩薩說出世語。",
        "from": "T37n1763_034:0492a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0492a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四明昔小今大。",
        "from": "T37n1763_034:0492a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應言更。",
        "from": "T37n1763_034:0492a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以益物為更者。",
        "from": "T37n1763_034:0492a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四十九年已來。",
        "from": "T37n1763_034:0492a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未始不益。",
        "from": "T37n1763_034:0492a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應今日方云更也。",
        "from": "T37n1763_034:0492a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下釋無更義。",
        "from": "T37n1763_034:0492a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有九重也。",
        "from": "T37n1763_034:0492a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即第一明教異。",
        "from": "T37n1763_034:0492a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂昔淺而今深也。",
        "from": "T37n1763_034:0492a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子是諸大眾復有二種(至)為諸菩薩轉大法輪。",
        "from": "T37n1763_034:0492a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明乘異。",
        "from": "T37n1763_034:0492a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔為求小者故說。",
        "from": "T37n1763_034:0492a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為求大者說。",
        "from": "T37n1763_034:0492a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子復有二人(至)極下根者即一闡提。",
        "from": "T37n1763_034:0492a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明根異。",
        "from": "T37n1763_034:0492a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔為中根者說。",
        "from": "T37n1763_034:0492a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為上根者說也。",
        "from": "T37n1763_034:0492a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子求佛道者(至)為上精進轉大法輪。",
        "from": "T37n1763_034:0492a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四明精進異。",
        "from": "T37n1763_034:0492a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔為中精進。",
        "from": "T37n1763_034:0492a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為上精進說也。",
        "from": "T37n1763_034:0492a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子我昔於彼(至)阿耨多羅三藐三菩提。",
        "from": "T37n1763_034:0492a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五明得道異。",
        "from": "T37n1763_034:0492a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔八萬天人悟須陀洹果。",
        "from": "T37n1763_034:0492a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今八十萬億人不退轉三菩提也。",
        "from": "T37n1763_034:0492a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子波羅捺城(至)稽首請我轉大法輪。",
        "from": "T37n1763_034:0492a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六明請主異。",
        "from": "T37n1763_034:0492a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔日梵王。",
        "from": "T37n1763_034:0492a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日迦葉。",
        "from": "T37n1763_034:0492a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子我昔於彼(至)如實演說常樂我淨。",
        "from": "T37n1763_034:0492a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七所明理異。",
        "from": "T37n1763_034:0492a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔說無常。",
        "from": "T37n1763_034:0492a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今說常也。",
        "from": "T37n1763_034:0492a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子我昔於彼(至)四維上下亦復如是。",
        "from": "T37n1763_034:0492a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八聲之所聞遠近異。",
        "from": "T37n1763_034:0492b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔止梵天。",
        "from": "T37n1763_034:0492b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今徹十方廿恒沙世界之也。",
        "from": "T37n1763_034:0492b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子諸佛世尊(至)皆悉名為轉法輪也。",
        "from": "T37n1763_034:0492b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九明自出世已來。",
        "from": "T37n1763_034:0492b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未曾不轉法輪。",
        "from": "T37n1763_034:0492b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今亦何更之有耶。",
        "from": "T37n1763_034:0492b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子譬如聖王所有輪寶(至)大涅槃經所行聖行。",
        "from": "T37n1763_034:0492b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎法輪也。",
        "from": "T37n1763_034:0492b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩白佛言世尊(至)則能奉行故名聖行。",
        "from": "T37n1763_034:0492b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0492b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上已說戒定慧。",
        "from": "T37n1763_034:0492b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通菩薩。",
        "from": "T37n1763_034:0492b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得稱聖行。",
        "from": "T37n1763_034:0492b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未知究竟實諦。",
        "from": "T37n1763_034:0492b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通學地以不。",
        "from": "T37n1763_034:0492b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故問也。",
        "from": "T37n1763_034:0492b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖名諸佛世尊者。",
        "from": "T37n1763_034:0492b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫究竟實諦。",
        "from": "T37n1763_034:0492b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得稱聖行。",
        "from": "T37n1763_034:0492b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛世尊也。",
        "from": "T37n1763_034:0492b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_034:0492b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下為明聖。",
        "from": "T37n1763_034:0492b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為明行。",
        "from": "T37n1763_034:0492b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來明戒定慧是聖人之所行。",
        "from": "T37n1763_034:0492b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非明聖也。",
        "from": "T37n1763_034:0492b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者正也。",
        "from": "T37n1763_034:0492b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來始當其位。",
        "from": "T37n1763_034:0492b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故說佛說聖義也。",
        "from": "T37n1763_034:0492b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今但合行說耳。",
        "from": "T37n1763_034:0492b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旨不在行也。",
        "from": "T37n1763_034:0492b15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492b15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明戒中。",
        "from": "T37n1763_034:0492b15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已結聖名。",
        "from": "T37n1763_034:0492b15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今辨三法既竟。",
        "from": "T37n1763_034:0492b16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想結聖行。",
        "from": "T37n1763_034:0492b16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_034:0492b16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五段結果也。",
        "from": "T37n1763_034:0492b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子是菩薩摩訶薩(至)是故此地名無所畏。",
        "from": "T37n1763_034:0492b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0492b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前三是因。",
        "from": "T37n1763_034:0492b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後四是果。",
        "from": "T37n1763_034:0492b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧能斷因果。",
        "from": "T37n1763_034:0492b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故總說地德也。",
        "from": "T37n1763_034:0492b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不畏三惡道者。",
        "from": "T37n1763_034:0492b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除惡已漸。",
        "from": "T37n1763_034:0492b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次說之。",
        "from": "T37n1763_034:0492b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三麁故先除也。",
        "from": "T37n1763_034:0492b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡有二種者。",
        "from": "T37n1763_034:0492b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此善趣中惡也。",
        "from": "T37n1763_034:0492b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不畏受二十五有者。",
        "from": "T37n1763_034:0492b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無如上惡。",
        "from": "T37n1763_034:0492b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能斷二十五有也。",
        "from": "T37n1763_034:0492b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_034:0492b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得上戒定慧行。",
        "from": "T37n1763_034:0492b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則入此初住地也。",
        "from": "T37n1763_034:0492b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離五怖畏。",
        "from": "T37n1763_034:0492b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰無畏地也。",
        "from": "T37n1763_034:0492b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏貪恚病死等者。",
        "from": "T37n1763_034:0492b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即不死不活畏也。",
        "from": "T37n1763_034:0492b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闡提等者。",
        "from": "T37n1763_034:0492b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離惡名畏也。",
        "from": "T37n1763_034:0492b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不畏三惡道。",
        "from": "T37n1763_034:0492b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無惡道畏也。",
        "from": "T37n1763_034:0492b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不畏沙門。",
        "from": "T37n1763_034:0492b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至波旬。",
        "from": "T37n1763_034:0492b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無大眾畏也。",
        "from": "T37n1763_034:0492b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前不動地。",
        "from": "T37n1763_034:0492b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是入初地之始也。",
        "from": "T37n1763_034:0492b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪忍地。",
        "from": "T37n1763_034:0492b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是初地之中。",
        "from": "T37n1763_034:0492b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無畏地。",
        "from": "T37n1763_034:0492b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是初地之終。",
        "from": "T37n1763_034:0492b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可七住。",
        "from": "T37n1763_034:0492b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七住三界結盡。",
        "from": "T37n1763_034:0492b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始無三畏之畏也。",
        "from": "T37n1763_034:0492c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏地者。",
        "from": "T37n1763_034:0492c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七地也。",
        "from": "T37n1763_034:0492c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前結戒果云。",
        "from": "T37n1763_034:0492c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初不動地。",
        "from": "T37n1763_034:0492c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結定果云。",
        "from": "T37n1763_034:0492c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三堪忍地。",
        "from": "T37n1763_034:0492c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今結慧果。",
        "from": "T37n1763_034:0492c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指第七地也。",
        "from": "T37n1763_034:0492c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以爾者。",
        "from": "T37n1763_034:0492c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行有淺深。",
        "from": "T37n1763_034:0492c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結果亦異。",
        "from": "T37n1763_034:0492c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言無畏為七地。",
        "from": "T37n1763_034:0492c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依常釋七地。",
        "from": "T37n1763_034:0492c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為遠行地。",
        "from": "T37n1763_034:0492c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今乃云。",
        "from": "T37n1763_034:0492c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏者。",
        "from": "T37n1763_034:0492c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂不畏三界果報。",
        "from": "T37n1763_034:0492c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故偏稱也。",
        "from": "T37n1763_034:0492c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_034:0492c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏果者。",
        "from": "T37n1763_034:0492c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦同是初地。",
        "from": "T37n1763_034:0492c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明慧是解性。",
        "from": "T37n1763_034:0492c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不存緣而照。",
        "from": "T37n1763_034:0492c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既具有無分別之知。",
        "from": "T37n1763_034:0492c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故結之以無畏也。",
        "from": "T37n1763_034:0492c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一無不活畏。",
        "from": "T37n1763_034:0492c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以菩薩達萬法相空。",
        "from": "T37n1763_034:0492c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不假資生。",
        "from": "T37n1763_034:0492c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈畏不活。",
        "from": "T37n1763_034:0492c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不畏故。",
        "from": "T37n1763_034:0492c09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不生三毒。",
        "from": "T37n1763_034:0492c10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無不活畏也。",
        "from": "T37n1763_034:0492c10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二無三惡道畏也。",
        "from": "T37n1763_034:0492c10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三無惡名畏。",
        "from": "T37n1763_034:0492c11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四無大眾威德畏。",
        "from": "T37n1763_034:0492c11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五無生死畏。",
        "from": "T37n1763_034:0492c12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士不畏受二十五有生死。",
        "from": "T37n1763_034:0492c12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子菩薩摩訶薩(至)所有功德而當可說。",
        "from": "T37n1763_034:0492c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_034:0492c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_034:0492c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智能除結。",
        "from": "T37n1763_034:0492c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非定不成。",
        "from": "T37n1763_034:0492c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以因定說智也。",
        "from": "T37n1763_034:0492c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲吹壞須彌山王。",
        "from": "T37n1763_034:0492c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至碎身之苦者。",
        "from": "T37n1763_034:0492c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地有二果。",
        "from": "T37n1763_034:0492c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一滅惡。",
        "from": "T37n1763_034:0492c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二神通。",
        "from": "T37n1763_034:0492c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩說其名也。",
        "from": "T37n1763_034:0492c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以然者。",
        "from": "T37n1763_034:0492c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上說斷有。",
        "from": "T37n1763_034:0492c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或者便謂。",
        "from": "T37n1763_034:0492c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得入有為化。",
        "from": "T37n1763_034:0492c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更出自在之事。",
        "from": "T37n1763_034:0492c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以表地名。",
        "from": "T37n1763_034:0492c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋其疑也。",
        "from": "T37n1763_034:0492c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_034:0492c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此言漸進。",
        "from": "T37n1763_034:0492c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向八地也。",
        "from": "T37n1763_034:0492c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向七地已。",
        "from": "T37n1763_034:0492c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不畏惡道果報。",
        "from": "T37n1763_034:0492c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而未免二十五有者。",
        "from": "T37n1763_034:0492c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就七地。",
        "from": "T37n1763_034:0492c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自有餘報身者。",
        "from": "T37n1763_034:0492c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今八地以上。",
        "from": "T37n1763_034:0492c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一向法身。",
        "from": "T37n1763_034:0492c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故言二十五有也。",
        "from": "T37n1763_034:0492c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧非慧。",
        "from": "T37n1763_034:0492c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因定生慧。",
        "from": "T37n1763_034:0492c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共相資成也。",
        "from": "T37n1763_034:0492c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以知八地者。",
        "from": "T37n1763_034:0492c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言具二十五三昧。",
        "from": "T37n1763_034:0492c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能為種種神通。",
        "from": "T37n1763_034:0492c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋神通之用。",
        "from": "T37n1763_034:0492c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非近行所為也。",
        "from": "T37n1763_034:0492c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_034:0492c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六段也。",
        "from": "T37n1763_034:0492c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若通作結果段者。",
        "from": "T37n1763_034:0492c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶屬前文。",
        "from": "T37n1763_034:0492c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五段直結果。",
        "from": "T37n1763_034:0492c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在初地既發。",
        "from": "T37n1763_034:0492c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初住得無漏正解。",
        "from": "T37n1763_034:0492c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後方進修萬行。",
        "from": "T37n1763_034:0492c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得二十五三昧。",
        "from": "T37n1763_034:0492c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷二十五有。",
        "from": "T37n1763_034:0492c28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結得八地以上自在果。",
        "from": "T37n1763_034:0492c28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若就此義而分。",
        "from": "T37n1763_034:0492c29_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則成第六也。",
        "from": "T37n1763_034:0492c29_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此二十五三昧。",
        "from": "T37n1763_034:0492c29_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就勝處受名。",
        "from": "T37n1763_034:0493a01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆攝於眾。",
        "from": "T37n1763_034:0493a01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名三昧中之王也。",
        "from": "T37n1763_034:0493a01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第三十四",
        "from": "T37n1763_034:0493a03_0",
        "context_with_next_sentence": false
    }
]