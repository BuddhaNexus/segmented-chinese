[
    {
        "source_sentence": "御製序",
        "from": "X68n1319_005:0527b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫達摩西來。",
        "from": "X68n1319_005:0527b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九年面壁。",
        "from": "X68n1319_005:0527b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無多言句。",
        "from": "X68n1319_005:0527b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能直指人心。",
        "from": "X68n1319_005:0527b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見性成佛。",
        "from": "X68n1319_005:0527b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首開震旦之宗風。",
        "from": "X68n1319_005:0527b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後人演唱提持。",
        "from": "X68n1319_005:0527b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照用權實。",
        "from": "X68n1319_005:0527b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳴塗毒鼓。",
        "from": "X68n1319_005:0527b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揮太阿鋒於言象不該之表。",
        "from": "X68n1319_005:0527b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形名未兆之先。",
        "from": "X68n1319_005:0527b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機如電掣雷奔。",
        "from": "X68n1319_005:0527b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譚似河流海注。",
        "from": "X68n1319_005:0527b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青蓮花紛飄舌本。",
        "from": "X68n1319_005:0527b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師子吼斷十方。",
        "from": "X68n1319_005:0527b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿透百千諸佛耳根。",
        "from": "X68n1319_005:0527b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[跳-兆+孛]跳三十三天空外。",
        "from": "X68n1319_005:0527b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究其所歸。",
        "from": "X68n1319_005:0527b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不過鋪荊列棘。",
        "from": "X68n1319_005:0527b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧地生枝。",
        "from": "X68n1319_005:0527b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘草黃連。",
        "from": "X68n1319_005:0527b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心甘苦耳。",
        "from": "X68n1319_005:0527b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則自利利他。",
        "from": "X68n1319_005:0527b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固不在於多言歟。",
        "from": "X68n1319_005:0527b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州諗禪師。",
        "from": "X68n1319_005:0527b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓證無生法忍。",
        "from": "X68n1319_005:0527b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以本分事接人。",
        "from": "X68n1319_005:0527b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍門之桐。",
        "from": "X68n1319_005:0527b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高百尺而無枝。",
        "from": "X68n1319_005:0527b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕閱其言句。",
        "from": "X68n1319_005:0527b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真所謂皮膚剝落盡。",
        "from": "X68n1319_005:0527b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨見一真實者。",
        "from": "X68n1319_005:0527b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠達摩之所護念。",
        "from": "X68n1319_005:0527b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獅乳一滴。",
        "from": "X68n1319_005:0527b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足迸散千斛驢乳。",
        "from": "X68n1319_005:0527b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但禪師垂示。",
        "from": "X68n1319_005:0527b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如五色珠。",
        "from": "X68n1319_005:0527b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若小知淺見。",
        "from": "X68n1319_005:0527b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會於言表。",
        "from": "X68n1319_005:0527b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則辜負古佛之慈悲。",
        "from": "X68n1319_005:0527b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "落草之婆心也。",
        "from": "X68n1319_005:0527b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀師信手拈來。",
        "from": "X68n1319_005:0527b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信口說出。",
        "from": "X68n1319_005:0527b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆令十方智者一時直入如來地。",
        "from": "X68n1319_005:0527b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂壁立萬仞。",
        "from": "X68n1319_005:0527b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月印千江。",
        "from": "X68n1319_005:0527c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如趙州之接人。",
        "from": "X68n1319_005:0527c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠為直指人心。",
        "from": "X68n1319_005:0527c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見性成佛之古佛云。",
        "from": "X68n1319_005:0527c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰錄其精粹者著於篇。",
        "from": "X68n1319_005:0527c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示後學。",
        "from": "X68n1319_005:0527c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾知真宗軌範。",
        "from": "X68n1319_005:0527c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是如是爾。",
        "from": "X68n1319_005:0527c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍正十一年癸丑五月望日",
        "from": "X68n1319_005:0527c04_0",
        "context_with_next_sentence": false
    }
]