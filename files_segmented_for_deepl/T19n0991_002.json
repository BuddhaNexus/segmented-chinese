[
    {
        "source_sentence": "大雲輪請雨經卷下",
        "from": "T19n0991_002:0497a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋天竺三藏那連提耶舍譯",
        "from": "T19n0991_002:0497a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "◎爾時世尊說是諸佛如來名已。",
        "from": "T19n0991_002:0497a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告於無邊莊嚴海雲威德輪蓋龍王作如是言。",
        "from": "T19n0991_002:0497a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝大龍王。",
        "from": "T19n0991_002:0497a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸佛名汝等一切諸龍眷屬。",
        "from": "T19n0991_002:0497a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能誦持稱彼佛名及禮拜者。",
        "from": "T19n0991_002:0497a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸龍所有苦厄。",
        "from": "T19n0991_002:0497a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉解脫普獲安樂。",
        "from": "T19n0991_002:0497a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得安樂已即能於此閻浮提中。",
        "from": "T19n0991_002:0497a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風雨隨時令諸藥草樹木叢林。",
        "from": "T19n0991_002:0497a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆生長五穀成熟。",
        "from": "T19n0991_002:0497a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "◎◎爾時娑婆三千大千世界之主。",
        "from": "T19n0991_002:0497a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊莊嚴海雲威德輪蓋龍王。",
        "from": "T19n0991_002:0497a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言。",
        "from": "T19n0991_002:0497a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今啟請諸佛所說陀羅尼句。",
        "from": "T19n0991_002:0497a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令於未來末世之時。",
        "from": "T19n0991_002:0497a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閻浮提內若有亢旱不降雨處。",
        "from": "T19n0991_002:0497a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此神呪即當降雨。",
        "from": "T19n0991_002:0497a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢饉惡世多饒疾疫。",
        "from": "T19n0991_002:0497a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非法亂行人民恐怖。",
        "from": "T19n0991_002:0497a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妖星變怪災厲相續。",
        "from": "T19n0991_002:0497a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有如是等無量苦惱。",
        "from": "T19n0991_002:0497a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛力故悉得滅除。",
        "from": "T19n0991_002:0497a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊大慈悲愍諸眾生故。",
        "from": "T19n0991_002:0497a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住持為說所有神呪陀羅尼句。",
        "from": "T19n0991_002:0497a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告諸龍知能使諸天歡喜踊躍。",
        "from": "T19n0991_002:0497a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能破散一切諸魔。",
        "from": "T19n0991_002:0497a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生身中所有苦難之事。",
        "from": "T19n0991_002:0497a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并及惡星變怪災障。",
        "from": "T19n0991_002:0497a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆除滅。",
        "from": "T19n0991_002:0497a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復如來曾說五種雨障之災。",
        "from": "T19n0991_002:0497a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦皆消滅彼障除已。",
        "from": "T19n0991_002:0497a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能使此閻浮提內雨澤以時。",
        "from": "T19n0991_002:0497a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來為我等說。",
        "from": "T19n0991_002:0497a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T19n0991_002:0497a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此無邊莊嚴海雲威德輪蓋龍王如是語已。",
        "from": "T19n0991_002:0497a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即讚歎言善哉善哉汝大龍王。",
        "from": "T19n0991_002:0497b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今亦如諸佛饒益一切眾生憐愍安樂。",
        "from": "T19n0991_002:0497b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能請如來說此神呪。",
        "from": "T19n0991_002:0497b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝大龍王諦聽諦聽善思念之。",
        "from": "T19n0991_002:0497b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當為汝說於往昔從彼大悲雲生如來所聞。",
        "from": "T19n0991_002:0497b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震吼奮迅勇猛幢陀羅尼。",
        "from": "T19n0991_002:0497b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸佛已曾宣說威神加護。",
        "from": "T19n0991_002:0497b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦當隨順而說。",
        "from": "T19n0991_002:0497b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益一切諸眾生故憐愍與樂。",
        "from": "T19n0991_002:0497b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世若炎旱時能令降雨。",
        "from": "T19n0991_002:0497b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若汎雨時亦能令止。",
        "from": "T19n0991_002:0497b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢饉疾疫悉能除滅。",
        "from": "T19n0991_002:0497b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普告諸龍令使知聞。",
        "from": "T19n0991_002:0497b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復令諸天歡喜踊躍。",
        "from": "T19n0991_002:0497b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散一切魔安隱眾生。",
        "from": "T19n0991_002:0497b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T19n0991_002:0497b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛緻他摩訶若那(引)婆婆(引)薩尼(一)尼梨低殊(引)洛敧彌(去聲二)提利茶(引)毘迦囉摩跋闍羅(引)僧伽怛膩(三)波羅摩毘囉闍(四)埿摩求那鷄(經岐反)兜(引)修梨耶(引)波羅鞞(五)毘摩嵐(引)伽耶師(六)婆囉(引)婆囉(去聲七)三婆囉(引)三婆囉(去聲八)豆潭(徒感反)鞞(去聲九)呵那呵那(十)摩訶波羅薜(蒲詣反十一)毘頭多摸訶陀迦隷(十二)波囉若伽囉輸悌(十三)波梨富婁那(引)迷帝隷迷怛利(引)帝囉(引)摩那娑揵提(去聲十四)彌多羅浮馱利(十五)社羅社羅(十六)社羅社羅(十七)社羅浮馱利(十八)蒲登伽俱蘇迷(去聲十九)達捨婆利(二十)遮鬪薨賒(引)阿囉提(二十一)頞瑟吒達舍毘尼迦佛陀(引)達迷(去聲二十二)輸頗摩帝(二十三)分若羅翅(二十四)叔迦羅(引)達摩(引)三摩泥比(二十五)鉗毘梨(二十六)毘羅闍悉鷄(經岐反二十七)毘富茶毘舍沙波羅鉢帝(二十八)尼囉蘇羅(引)婆(引)達彌(二十九)薩婆盧迦(引)匙(引)瑟吒(三十)失梨沙吒(引三十一)波羅波羅婆(引)兮唎(三十二)阿奴(引)怛唎(三十三)阿僧祇(三十四)陀囉陀囉(三十五)地唎地唎(三十六)豆漏豆漏(三十七)賒塞多(引)摩帝(三十八)賒塞多(引)波蔽(三十九)遮羅遮羅(四十)旨唎旨唎(四十一)呪漏呪漏(四十二)波羅遮(引)佛陀喃(引南去聲)摩帝(四十三)摩訶般利若(引)波(引)羅(引)蜜帝莎(引)呵(四十四)南無智海毘盧遮那藏如來。",
        "from": "T19n0991_002:0497b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無一切諸菩提薩埵。",
        "from": "T19n0991_002:0497c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切諸龍王等。",
        "from": "T19n0991_002:0497c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為降雨故受持此呪。",
        "from": "T19n0991_002:0497c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若後末世惡災行時能令不起。",
        "from": "T19n0991_002:0497c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復一切諸佛菩薩真實力故。",
        "from": "T19n0991_002:0497c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂復勅諸一切龍等。",
        "from": "T19n0991_002:0497c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提所祈請處。",
        "from": "T19n0991_002:0497c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨除滅五種雨之障礙。",
        "from": "T19n0991_002:0497c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說呪曰。",
        "from": "T19n0991_002:0497c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多緻他(一)娑邏娑邏(二)四唎四唎(三)素漏素漏(四)那(引)伽喃(去聲五)闍婆闍婆(一句並去聲六)侍毘侍毘(並去聲七)樹附樹附(八)佛實力故。",
        "from": "T19n0991_002:0497c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大龍王等速來在於閻浮提內。",
        "from": "T19n0991_002:0497c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所祈請處降澍大雨而說呪曰。",
        "from": "T19n0991_002:0497c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮羅遮羅(並去聲一)至利至利(二)朱漏朱漏(三)佛實力故。",
        "from": "T19n0991_002:0497c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咄諸龍王於閻浮提。",
        "from": "T19n0991_002:0497c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請雨國內降澍大雨。",
        "from": "T19n0991_002:0497c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說呪曰。",
        "from": "T19n0991_002:0497c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆邏婆邏(並去聲一)避利避利(避字並白利反二)復漏復漏(三)諸佛菩薩威神之力。",
        "from": "T19n0991_002:0497c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘真實行業力故。",
        "from": "T19n0991_002:0497c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸龍王等速來至此。",
        "from": "T19n0991_002:0497c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各憶念諸如來法及菩薩行。",
        "from": "T19n0991_002:0497c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起於慈心悲心喜心及以捨心。",
        "from": "T19n0991_002:0497c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說呪曰。",
        "from": "T19n0991_002:0497c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆邏婆邏(一)毘梨毘梨(二)蒲盧蒲盧(三)大意氣龍王慈心正念妙密佛法。",
        "from": "T19n0991_002:0497c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持大雲雨速來至此。",
        "from": "T19n0991_002:0497c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說呪曰。",
        "from": "T19n0991_002:0498a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伽茶伽茶(一)祁墀祁墀(二)瞿厨瞿厨(三)一切諸佛真實力故。",
        "from": "T19n0991_002:0498a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大健瞋者大疾行者睒電舌者。",
        "from": "T19n0991_002:0498a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治諸惡毒來起慈心。",
        "from": "T19n0991_002:0498a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提請雨國內。",
        "from": "T19n0991_002:0498a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎(引)呵。",
        "from": "T19n0991_002:0498a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說呪曰。",
        "from": "T19n0991_002:0498a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛吒怛吒(吒並去聲一)底致底致(二)鬪晝鬪晝(三)金剛密迹真實力故。",
        "from": "T19n0991_002:0498a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上戴大摩尼天冠。",
        "from": "T19n0991_002:0498a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇身相者念三寶力。",
        "from": "T19n0991_002:0498a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提此請雨國內降澍大雨莎(引)呵。",
        "from": "T19n0991_002:0498a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說呪曰。",
        "from": "T19n0991_002:0498a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦羅迦羅(一)繼利繼利(二)句漏句漏(三)佛實力故。",
        "from": "T19n0991_002:0498a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密跡勅彼一切澍大水者乘大雲者。",
        "from": "T19n0991_002:0498a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起慈悲心悉來於此閻浮提中請雨國內。",
        "from": "T19n0991_002:0498a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨又說呪曰。",
        "from": "T19n0991_002:0498a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何邏邏何邏羅(一)兮利履兮利履(二)候漏塿(婁苟反)候漏塿(三)三世諸佛真實力故。",
        "from": "T19n0991_002:0498a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令一切諸龍眷屬捨於睡眠。",
        "from": "T19n0991_002:0498a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說呪曰。",
        "from": "T19n0991_002:0498a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伽磨伽磨(一)姞寐姞寐(二)求牟求牟(三)莎呵我勅一切諸龍王等。",
        "from": "T19n0991_002:0498a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起大慈心為菩提本而說呪曰。",
        "from": "T19n0991_002:0498a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那囉那囉(一)尼梨尼梨(二)奴漏奴漏(三)莎呵咄咄龍等種種異形。",
        "from": "T19n0991_002:0498a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千頭可畏赤眼大力大蛇身者。",
        "from": "T19n0991_002:0498a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今勅汝。",
        "from": "T19n0991_002:0498a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當憶念最上慈悲威神功德滅煩惱者。",
        "from": "T19n0991_002:0498a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛如來名字。",
        "from": "T19n0991_002:0498a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說呪曰。",
        "from": "T19n0991_002:0498a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揭(其謁反)茶(去聲)揭茶(一)耆穉耆穉(二)崛住崛住(三)莎呵無礙勇健奪於世間人色力者。",
        "from": "T19n0991_002:0498a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提請雨國內。",
        "from": "T19n0991_002:0498a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨而說呪曰。",
        "from": "T19n0991_002:0498b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍囉舍囉(一)尸利尸利(二)輸(入聲)嚧輸嚧莎呵一切諸天真實力故。",
        "from": "T19n0991_002:0498b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咄諸大龍念自種姓。",
        "from": "T19n0991_002:0498b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速來於此閻浮提中請雨國內。",
        "from": "T19n0991_002:0498b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎呵。",
        "from": "T19n0991_002:0498b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵天王實行力故。",
        "from": "T19n0991_002:0498b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內。",
        "from": "T19n0991_002:0498b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎呵。",
        "from": "T19n0991_002:0498b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天主帝釋實行力故。",
        "from": "T19n0991_002:0498b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內。",
        "from": "T19n0991_002:0498b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎呵。",
        "from": "T19n0991_002:0498b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王實行力故。",
        "from": "T19n0991_002:0498b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內。",
        "from": "T19n0991_002:0498b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎呵。",
        "from": "T19n0991_002:0498b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八人實行力故。",
        "from": "T19n0991_002:0498b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內。",
        "from": "T19n0991_002:0498b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎呵。",
        "from": "T19n0991_002:0498b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須陀洹實行力故。",
        "from": "T19n0991_002:0498b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內。",
        "from": "T19n0991_002:0498b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎呵。",
        "from": "T19n0991_002:0498b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯陀含實行力故。",
        "from": "T19n0991_002:0498b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內。",
        "from": "T19n0991_002:0498b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降澍大雨莎呵。",
        "from": "T19n0991_002:0498b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿那含實行力故。",
        "from": "T19n0991_002:0498b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內降澍大雨莎呵。",
        "from": "T19n0991_002:0498b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿羅漢實行力故。",
        "from": "T19n0991_002:0498b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內降澍大雨莎呵。",
        "from": "T19n0991_002:0498b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟支佛實行力故。",
        "from": "T19n0991_002:0498b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內降澍大雨莎呵。",
        "from": "T19n0991_002:0498b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩實行力故。",
        "from": "T19n0991_002:0498b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內降澍大雨莎呵。",
        "from": "T19n0991_002:0498b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛實行力故。",
        "from": "T19n0991_002:0498b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸龍王於閻浮提請雨國內降澍大雨莎呵。",
        "from": "T19n0991_002:0498b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天實行力故令速除滅災障苦惱莎呵。",
        "from": "T19n0991_002:0498b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸龍實行力故能速降雨潤此大地莎呵。",
        "from": "T19n0991_002:0498b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切夜叉實行力故能速覆護一切眾生莎呵。",
        "from": "T19n0991_002:0498c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切揵闥婆實行力故能速除滅一切眾生所有憂惱莎呵。",
        "from": "T19n0991_002:0498c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切阿修羅實行力故能速迴轉惡星變怪莎呵。",
        "from": "T19n0991_002:0498c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切迦樓羅實行力故於諸龍邊起大慈悲降澍大雨莎呵。",
        "from": "T19n0991_002:0498c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切緊那羅實行力故速能滅除一切眾生諸重罪業令起踊躍莎呵。",
        "from": "T19n0991_002:0498c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切摩睺羅伽實行力故能降大雨普使充足滅除五種雨之障礙莎呵。",
        "from": "T19n0991_002:0498c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切善男子善女人實行力故善能覆護一切眾生莎呵。",
        "from": "T19n0991_002:0498c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說呪曰。",
        "from": "T19n0991_002:0498c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦邏迦邏(一)抧利抧利(二)句嚧句嚧(去聲三)陀囉陀囉(一)地利地利(二)豆漏豆嚧(三)那吒那吒(一)膩(年一反)[口*致]膩[口*致]膩(二)奴晝奴晝(三)持大雲雨疾行之者如雲者。",
        "from": "T19n0991_002:0498c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著雲衣者生雲中者。",
        "from": "T19n0991_002:0498c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能作雲者雲雷響者。",
        "from": "T19n0991_002:0498c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住雲中者雲天冠者。",
        "from": "T19n0991_002:0498c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲莊嚴者乘大雲者。",
        "from": "T19n0991_002:0498c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲中隱者雲中藏者。",
        "from": "T19n0991_002:0498c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被雲髮者耀雲光者。",
        "from": "T19n0991_002:0498c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲圍遶者處大雲者。",
        "from": "T19n0991_002:0498c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲瓔珞者能奪五穀精氣之者。",
        "from": "T19n0991_002:0498c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住在深山叢林中者。",
        "from": "T19n0991_002:0498c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者龍母名分陀羅大雲威德喜樂尊大龍王。",
        "from": "T19n0991_002:0498c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體清涼持大風輪。",
        "from": "T19n0991_002:0498c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛實行力故。",
        "from": "T19n0991_002:0498c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放六味雨而說呪曰。",
        "from": "T19n0991_002:0498c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伽邏伽邏(一)岐利岐利(二)求漏求漏(三)其利尼其利尼(四)求磨求磨求磨求磨求磨求磨求磨求磨求磨(凡九求磨五)九頭龍母。",
        "from": "T19n0991_002:0498c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅告首冠大雲閃電華冠之者。",
        "from": "T19n0991_002:0499a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持一切龍者服雲衣者。",
        "from": "T19n0991_002:0499a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝諸境界毒氣者乘雲嚴者。",
        "from": "T19n0991_002:0499a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雷聲遠震能告諸龍者大雲圍遶者。",
        "from": "T19n0991_002:0499a04_4",
        "context_with_next_sentence": true
    },
    {
