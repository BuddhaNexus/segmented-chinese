[
    {
        "source_sentence": "一切如來大祕密王未曾有最上",
        "from": "T18n0889_004:0552c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙大曼拏羅經卷第四",
        "from": "T18n0889_004:0552c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T18n0889_004:0552c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿明教大師臣",
        "from": "T18n0889_004:0552c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天息災奉　詔譯",
        "from": "T18n0889_004:0552c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先法攝受弟子品第五",
        "from": "T18n0889_004:0552c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩摩訶薩。",
        "from": "T18n0889_004:0552c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大眾中即從坐起。",
        "from": "T18n0889_004:0552c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛三匝合十指掌。",
        "from": "T18n0889_004:0552c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言世尊。",
        "from": "T18n0889_004:0552c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨云何攝受弟子入曼拏羅。",
        "from": "T18n0889_004:0552c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復云何而作。",
        "from": "T18n0889_004:0552c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先法。",
        "from": "T18n0889_004:0552c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言金剛手。",
        "from": "T18n0889_004:0552c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨攝受弟子入曼拏羅者。",
        "from": "T18n0889_004:0552c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其弟子將入曼拏羅。",
        "from": "T18n0889_004:0552c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當預潔淨身心。",
        "from": "T18n0889_004:0552c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若內若外使令相應。",
        "from": "T18n0889_004:0552c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨方可引弟子至曼拏羅所。",
        "from": "T18n0889_004:0552c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令面北或面東跪坐。",
        "from": "T18n0889_004:0552c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執白花當依本尊儀則。",
        "from": "T18n0889_004:0552c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以明王真言加持水。",
        "from": "T18n0889_004:0552c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與弟子灑淨。",
        "from": "T18n0889_004:0552c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用甘露軍吒利真言及印與作擁護。",
        "from": "T18n0889_004:0552c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令弟子發無上菩提心。",
        "from": "T18n0889_004:0552c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘露軍吒利真言曰。",
        "from": "T18n0889_004:0552c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)阿蜜哩(二合)帝(引)入嚩(二合)羅入嚩(二合)羅吽[口*發]吒甘露軍吒利印。",
        "from": "T18n0889_004:0552c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手相叉作拳。",
        "from": "T18n0889_004:0552c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二中指相著如針。",
        "from": "T18n0889_004:0552c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以頭指附中指第三節。",
        "from": "T18n0889_004:0552c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二大指入掌成印。",
        "from": "T18n0889_004:0552c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以真言及印加持擁護訖。",
        "from": "T18n0889_004:0552c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令弟子自發菩提心願。",
        "from": "T18n0889_004:0552c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願云我今為一切有情。",
        "from": "T18n0889_004:0552c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起不退心行菩薩行。",
        "from": "T18n0889_004:0552c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若我成佛誓度一切有情咸登佛果。",
        "from": "T18n0889_004:0552c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨復為弟子發大悲心。",
        "from": "T18n0889_004:0552c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與弟子說於菩薩不退地法。",
        "from": "T18n0889_004:0552c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令弟子志求。",
        "from": "T18n0889_004:0553a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次為弟子說佛所得功德。",
        "from": "T18n0889_004:0553a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是說已然後與受三歸竟。",
        "from": "T18n0889_004:0553a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令弟子入三昧以線作結。",
        "from": "T18n0889_004:0553a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛羯磨真言而作擁護真言曰。",
        "from": "T18n0889_004:0553a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合引)蜜里(二合)多摩賀(引)尾里也(二合)鉢囉(二合)底誐里(二合)恨拏(二合)娑嚩(二合)[牟*含]作擁護已。",
        "from": "T18n0889_004:0553a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令弟子直至得阿耨多羅三藐三菩提不復退轉。",
        "from": "T18n0889_004:0553a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復結金剛羯磨印。",
        "from": "T18n0889_004:0553a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用右手大小指相捻。",
        "from": "T18n0889_004:0553a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直舒餘指成印。",
        "from": "T18n0889_004:0553a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此印復作擁護及與真言同用。",
        "from": "T18n0889_004:0553a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0889_004:0553a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)阿蜜里(二合)帝洛叉洛叉摩(引)吽[口*發]吒誦此真言。",
        "from": "T18n0889_004:0553a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前印印弟子心上臂上頸上頂上而為擁護。",
        "from": "T18n0889_004:0553a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於十四日早辰食時。",
        "from": "T18n0889_004:0553a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如是坐已。",
        "from": "T18n0889_004:0553a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復與灑淨令塗香已。",
        "from": "T18n0889_004:0553a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執白花作金剛合掌。",
        "from": "T18n0889_004:0553a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復與受三歸并五戒法已令安坐。",
        "from": "T18n0889_004:0553a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後阿闍梨自結毘盧印入無相定。",
        "from": "T18n0889_004:0553a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想一切莊嚴之具。",
        "from": "T18n0889_004:0553a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭冠瓔珞種種而自莊嚴已。",
        "from": "T18n0889_004:0553a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便想自身為毘盧遮那如來。",
        "from": "T18n0889_004:0553a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放青赤黃白綠等光明普照一切。",
        "from": "T18n0889_004:0553a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於彼毘盧遮那佛右邊。",
        "from": "T18n0889_004:0553a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想蓮花如摩尼相。",
        "from": "T18n0889_004:0553a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其蓮花上有寶生如來。",
        "from": "T18n0889_004:0553a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其如來身如日色。",
        "from": "T18n0889_004:0553a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦放光明照於弟子。",
        "from": "T18n0889_004:0553a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光至弟子左耳上住。",
        "from": "T18n0889_004:0553a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復想不空成就如來。",
        "from": "T18n0889_004:0553a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於弟子左耳中出現大風輪。",
        "from": "T18n0889_004:0553a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吹弟子身破壞。",
        "from": "T18n0889_004:0553a24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復變成火聚作大燒然。",
        "from": "T18n0889_004:0553a24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散如灰塵不見形像。",
        "from": "T18n0889_004:0553a25_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻如般若波羅蜜多無相無色。",
        "from": "T18n0889_004:0553a25_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次想無量壽佛如來。",
        "from": "T18n0889_004:0553a26_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眉間毫相中出光。",
        "from": "T18n0889_004:0553a26_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光中有明。",
        "from": "T18n0889_004:0553a27_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名甘露大明王。",
        "from": "T18n0889_004:0553a27_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色相如毘盧遮那佛。",
        "from": "T18n0889_004:0553a27_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身真金色手持髑髏。",
        "from": "T18n0889_004:0553a28_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中盛黃色甘露之水。",
        "from": "T18n0889_004:0553a28_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑前灰塵令其止息。",
        "from": "T18n0889_004:0553a29_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵相息已其塵聚作團。",
        "from": "T18n0889_004:0553a29_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想阿閦如來心中。",
        "from": "T18n0889_004:0553b01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出無量數相隨色光。",
        "from": "T18n0889_004:0553b01_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入彼灰塵之團。",
        "from": "T18n0889_004:0553b02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是想已總成真實。",
        "from": "T18n0889_004:0553b02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊毘盧遮那如來。",
        "from": "T18n0889_004:0553b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒右手指前五色光。",
        "from": "T18n0889_004:0553b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并真珠等七寶甘露之水。",
        "from": "T18n0889_004:0553b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮彼灰塵之團。",
        "from": "T18n0889_004:0553b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現作如來五色之相。",
        "from": "T18n0889_004:0553b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即時又復變化一切弟子本形。",
        "from": "T18n0889_004:0553b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀想已復念真言云。",
        "from": "T18n0889_004:0553b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)阿蜜里(二合)多摩(引)隷儞嚩日囉(二合)愈世嚩里嚩娑嚩(二合引)賀以此真言安前所變化身弟子。",
        "from": "T18n0889_004:0553b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是安已。",
        "from": "T18n0889_004:0553b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後阿闍梨復以金剛利真言。",
        "from": "T18n0889_004:0553b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持齒木及白花等。",
        "from": "T18n0889_004:0553b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手大指與頭指。",
        "from": "T18n0889_004:0553b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻花齒木等授與弟子。",
        "from": "T18n0889_004:0553b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子作金剛合掌受齒木花等。",
        "from": "T18n0889_004:0553b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以大惡忿怒明王真言。",
        "from": "T18n0889_004:0553b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持線作結。",
        "from": "T18n0889_004:0553b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫弟子右臂以為擁護真言曰。",
        "from": "T18n0889_004:0553b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)努瑟吒(二合)嚩日囉(二合)骨嚕(二合)馱賀曩賀曩薩里嚩(二合)波(引)半怛囉(二合)吒吽[口*癹]復誦真言曰。",
        "from": "T18n0889_004:0553b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)酥囉洛叉洛叉伊[牟*含](引)吽[口*癹]吒又真言曰。",
        "from": "T18n0889_004:0553b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)底訖叉拏(二合)佉那佉那郝金剛手彼阿闍梨觀想。",
        "from": "T18n0889_004:0553b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來以大神通。",
        "from": "T18n0889_004:0553b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變化作菩薩眾住虛空中。",
        "from": "T18n0889_004:0553b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各放光照於弟子。",
        "from": "T18n0889_004:0553b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀弟子運身。",
        "from": "T18n0889_004:0553b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍禮彼一切如來及菩薩眾。",
        "from": "T18n0889_004:0553b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至諸明王等一切印契。",
        "from": "T18n0889_004:0553b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復弟子於十方一切佛菩薩等。",
        "from": "T18n0889_004:0553b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈求攝受并及懺悔。",
        "from": "T18n0889_004:0553b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其弟子想自身。",
        "from": "T18n0889_004:0553b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立於寶生蓮花羯磨部佛菩薩等面前而作是言。",
        "from": "T18n0889_004:0553b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我自從無始已來至於今日。",
        "from": "T18n0889_004:0553b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無明根生煩惱枝葉。",
        "from": "T18n0889_004:0553c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成身口意不善之業。",
        "from": "T18n0889_004:0553c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願從今日得智慧風吹法性火。",
        "from": "T18n0889_004:0553c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒彼無始已來至於今日。",
        "from": "T18n0889_004:0553c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因於三業所作之罪。",
        "from": "T18n0889_004:0553c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切都盡無有遺餘。",
        "from": "T18n0889_004:0553c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是重重作是懺已。",
        "from": "T18n0889_004:0553c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復乞金剛手蓮花羯磨部十方一切佛菩薩等。",
        "from": "T18n0889_004:0553c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切印契真言明王。",
        "from": "T18n0889_004:0553c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及眾賢聖皆攝受我。",
        "from": "T18n0889_004:0553c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又我今歸命十方一切諸佛。",
        "from": "T18n0889_004:0553c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿涅盤遺身舍利願攝受我。",
        "from": "T18n0889_004:0553c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復我今對金剛蓮花羯磨部一切諸佛一切印契真言明王賢聖等。",
        "from": "T18n0889_004:0553c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨於自身及一切莊嚴之具願垂納受。",
        "from": "T18n0889_004:0553c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又願一切最上大悲一切成就之師而垂攝受。",
        "from": "T18n0889_004:0553c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我所有迴向金剛手蓮花羯磨部一切諸佛一切印契真言明王及眾賢聖。",
        "from": "T18n0889_004:0553c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是善根。",
        "from": "T18n0889_004:0553c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我於世間出世間。",
        "from": "T18n0889_004:0553c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有邪見皆悉除去。",
        "from": "T18n0889_004:0553c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切正見皆得現前。",
        "from": "T18n0889_004:0553c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有世間出世間一切有情。",
        "from": "T18n0889_004:0553c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆能發如是善意者願得圓滿。",
        "from": "T18n0889_004:0553c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得諸佛菩薩一切賢聖之所攝受。",
        "from": "T18n0889_004:0553c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念。",
        "from": "T18n0889_004:0553c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛世尊一切大悲普賢之心。",
        "from": "T18n0889_004:0553c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是我身口意金剛本元。",
        "from": "T18n0889_004:0553c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此本元體淨無垢如大虛空。",
        "from": "T18n0889_004:0553c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以是心趣求最上菩提。",
        "from": "T18n0889_004:0553c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願如三世諸佛得成正覺。",
        "from": "T18n0889_004:0553c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為一切有情持三種戒及眾善法。",
        "from": "T18n0889_004:0553c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此戒行堅牢受持。",
        "from": "T18n0889_004:0553c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於最上三寶而恒歸命。",
        "from": "T18n0889_004:0553c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於佛一切祕密之法印相及鈴杵等。",
        "from": "T18n0889_004:0553c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我一心受持。",
        "from": "T18n0889_004:0553c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有阿闍梨於大金剛族。",
        "from": "T18n0889_004:0553c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日六時迴施四眾專注不忘。",
        "from": "T18n0889_004:0553c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大寶族。",
        "from": "T18n0889_004:0553c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒常住彼最上適悅三昧。",
        "from": "T18n0889_004:0553c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大蓮花族。",
        "from": "T18n0889_004:0553c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有三乘微妙顯教密教恒樂受持。",
        "from": "T18n0889_004:0553c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於大羯磨族。",
        "from": "T18n0889_004:0553c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成大菩提一切戒法。",
        "from": "T18n0889_004:0553c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓取圓滿恒樂依法。",
        "from": "T18n0889_004:0553c28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切最上供養。",
        "from": "T18n0889_004:0553c28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而獻諸佛及眾賢聖。",
        "from": "T18n0889_004:0553c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念云。",
        "from": "T18n0889_004:0553c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今所發無上菩提之心持一切戒。",
        "from": "T18n0889_004:0553c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正為利樂一切有情。",
        "from": "T18n0889_004:0554a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使未度者令得度。",
        "from": "T18n0889_004:0554a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未解脫者得解脫。",
        "from": "T18n0889_004:0554a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未安者令得安。",
        "from": "T18n0889_004:0554a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已安者得住寂靜。",
        "from": "T18n0889_004:0554a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此正道最上吉祥。",
        "from": "T18n0889_004:0554a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於不空乘當得圓滿。",
        "from": "T18n0889_004:0554a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是等有情圓滿果已。",
        "from": "T18n0889_004:0554a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往彼彼處成佛菩提。",
        "from": "T18n0889_004:0554a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒以如是菩提之心。",
        "from": "T18n0889_004:0554a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而修利他之行。",
        "from": "T18n0889_004:0554a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨以如是儀則。",
        "from": "T18n0889_004:0554a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受弟子以為先法。",
        "from": "T18n0889_004:0554a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿闍梨再以甘露軍吒利真言及印而作擁護。",
        "from": "T18n0889_004:0554a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨攝受弟子已。",
        "from": "T18n0889_004:0554a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將欲更以擁護之法而擁護者。",
        "from": "T18n0889_004:0554a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可令弟子於常修行作觀想。",
        "from": "T18n0889_004:0554a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇外令面東坐。",
        "from": "T18n0889_004:0554a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受以齒木作淨已。",
        "from": "T18n0889_004:0554a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後阿闍梨結甘露軍吒利印。",
        "from": "T18n0889_004:0554a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手互相附。",
        "from": "T18n0889_004:0554a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二中指相著如針。",
        "from": "T18n0889_004:0554a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二頭指附二中指第三節。",
        "from": "T18n0889_004:0554a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指入二中指中間成印。",
        "from": "T18n0889_004:0554a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甘露軍吒利真言曰。",
        "from": "T18n0889_004:0554a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)阿蜜里(二合)帝(引)賀曩賀曩吽洛剎[口*發]其阿闍梨與弟子等於此時。",
        "from": "T18n0889_004:0554a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱只不離曼拏羅所。",
        "from": "T18n0889_004:0554a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或至夜止宿。",
        "from": "T18n0889_004:0554a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可只在曼拏羅東面地上。",
        "from": "T18n0889_004:0554a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敷吉祥草眠臥。",
        "from": "T18n0889_004:0554a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臥時以頭向南。",
        "from": "T18n0889_004:0554a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向曼拏羅本尊止宿。",
        "from": "T18n0889_004:0554a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至晨旦以金剛真言加持其地。",
        "from": "T18n0889_004:0554a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及加持香水於曼拏羅所而為灑淨。",
        "from": "T18n0889_004:0554a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨復須著新白衣。",
        "from": "T18n0889_004:0554a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從東北方誦真言。",
        "from": "T18n0889_004:0554a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗拭曼拏羅所。",
        "from": "T18n0889_004:0554a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T18n0889_004:0554a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)羯里摩(二合)囉憾尾囉洛叉脚酥誐多(引)怛摩(二合)惹儞鼻俱(引)尸計(引)曩嚩娑怛里(三合引)拏摩尼嚩日囉(二合)囉(引)誐(引)地波三摩(引)里惹(二合)夜(引)彌薩里嚩(二合引)誐囉(引)薩里嚩(二合)尾近努(二合)扇多曳吽賀囉(二合)護(引)呬曩[口*發]吒阿闍梨以此真言。",
        "from": "T18n0889_004:0554a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗拭曼拏羅已。",
        "from": "T18n0889_004:0554b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔心奉獻香花等而為供養。",
        "from": "T18n0889_004:0554b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以所求事告白諸聖賢。",
        "from": "T18n0889_004:0554b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心禮拜。",
        "from": "T18n0889_004:0554b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮已復更以種種歸命讚歎。",
        "from": "T18n0889_004:0554b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而讚於佛。",
        "from": "T18n0889_004:0554b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨復云。",
        "from": "T18n0889_004:0554b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今願一切諸佛正遍知者。",
        "from": "T18n0889_004:0554b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至菩薩及諸聖賢忿怒明王等願為證明。",
        "from": "T18n0889_004:0554b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今依真言教。",
        "from": "T18n0889_004:0554b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸佛子而作灌頂。",
        "from": "T18n0889_004:0554b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得灌頂已。",
        "from": "T18n0889_004:0554b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令一切有情得無上智。",
        "from": "T18n0889_004:0554b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得諸佛菩薩之所攝受。",
        "from": "T18n0889_004:0554b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是語已。",
        "from": "T18n0889_004:0554b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前所加持地中。",
        "from": "T18n0889_004:0554b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以白檀香同為塗飾作曼拏羅。",
        "from": "T18n0889_004:0554b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨手持鈴杵。",
        "from": "T18n0889_004:0554b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起勇猛心作忿怒相。",
        "from": "T18n0889_004:0554b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲杵振鈴。",
        "from": "T18n0889_004:0554b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞋目瞻視曼拏羅地。",
        "from": "T18n0889_004:0554b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或如師子作威怒相行曼拏羅所。",
        "from": "T18n0889_004:0554b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現微笑容作舞蹈相。",
        "from": "T18n0889_004:0554b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行曼拏羅所而作瞻視。",
        "from": "T18n0889_004:0554b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復自東北方起首。",
        "from": "T18n0889_004:0554b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍四方四維。",
        "from": "T18n0889_004:0554b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各於本天位安本天主。",
        "from": "T18n0889_004:0554b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復稱吽字并念呬字。",
        "from": "T18n0889_004:0554b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外瞻顧而作分別。",
        "from": "T18n0889_004:0554b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨手擲金剛杵。",
        "from": "T18n0889_004:0554b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自北方面南東邊作金剛步。",
        "from": "T18n0889_004:0554b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次行南方作金剛寶步。",
        "from": "T18n0889_004:0554b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方作金剛蓮花步。",
        "from": "T18n0889_004:0554b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次北方作金剛羯磨步。",
        "from": "T18n0889_004:0554b17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是以各各方。",
        "from": "T18n0889_004:0554b18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作本方本族行步。",
        "from": "T18n0889_004:0554b18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及念真言而作分布。",
        "from": "T18n0889_004:0554b18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常求諸佛聖賢而作覆護。",
        "from": "T18n0889_004:0554b19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又或暫出曼拏羅時。",
        "from": "T18n0889_004:0554b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以堅固勇猛心不散亂。",
        "from": "T18n0889_004:0554b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於少時頃却入曼拏羅已。",
        "from": "T18n0889_004:0554b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便須端坐冥心。",
        "from": "T18n0889_004:0554b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作觀想觀於諸佛。",
        "from": "T18n0889_004:0554b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初想東方佛位而作黑色。",
        "from": "T18n0889_004:0554b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想南方佛位而作紅色。",
        "from": "T18n0889_004:0554b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次西方黃色或如花或如寶色。",
        "from": "T18n0889_004:0554b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次北方如大綠色。",
        "from": "T18n0889_004:0554b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨住曼拏羅所修行之者。",
        "from": "T18n0889_004:0554b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以此儀而為安住。",
        "from": "T18n0889_004:0554b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿闍梨或為息災增益。",
        "from": "T18n0889_004:0554b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作曼拏羅分布聖位。",
        "from": "T18n0889_004:0554b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦作金剛步先作觀想。",
        "from": "T18n0889_004:0554b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中方想作白色。",
        "from": "T18n0889_004:0554b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於東方想作青色。",
        "from": "T18n0889_004:0554b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方想作金色。",
        "from": "T18n0889_004:0554b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方想作紅色。",
        "from": "T18n0889_004:0554b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方想如黑雲色。",
        "from": "T18n0889_004:0554b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至作忿怒法亦作金剛步。",
        "from": "T18n0889_004:0554b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其阿闍梨及持誦人。",
        "from": "T18n0889_004:0554c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作曼拏羅。",
        "from": "T18n0889_004:0554c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當隨法先觀想聖賢方位顏色已。",
        "from": "T18n0889_004:0554c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然作金剛步。",
        "from": "T18n0889_004:0554c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行於四方而作加持。",
        "from": "T18n0889_004:0554c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復先於中方面向中方。",
        "from": "T18n0889_004:0554c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作智金剛行步。",
        "from": "T18n0889_004:0554c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此金剛步名最上步。",
        "from": "T18n0889_004:0554c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿闍梨或持誦人。",
        "from": "T18n0889_004:0554c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以勇猛精進心手擲金剛杵。",
        "from": "T18n0889_004:0554c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在右旋遶曼拏羅所。",
        "from": "T18n0889_004:0554c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以微妙梵音說金剛歌讚曰。",
        "from": "T18n0889_004:0554c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚩日囉(二合)薩怛嚩(二合)僧屹囉(二合)賀嚩日囉(二合)囉怛曩(二合)麼努多囕嚩日囉(二合)達麼誐(引)野乃嚩日囉(二合)羯麼迦嚕(引)婆嚩復次金剛手。",
        "from": "T18n0889_004:0554c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今演說密中祕密微妙最上諸金剛步相分。",
        "from": "T18n0889_004:0554c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手其金剛步者。",
        "from": "T18n0889_004:0554c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以左足跟踏右足指。",
        "from": "T18n0889_004:0554c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以右足跟踏左足指。",
        "from": "T18n0889_004:0554c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名金剛步。",
        "from": "T18n0889_004:0554c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或行速疾者此名吠舍佉步。",
        "from": "T18n0889_004:0554c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次金剛手若於曼拏羅東方。",
        "from": "T18n0889_004:0554c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作金剛步者。",
        "from": "T18n0889_004:0554c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以左足跟踏右足指。",
        "from": "T18n0889_004:0554c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次右足跟踏左足指。",
        "from": "T18n0889_004:0554c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第行步左旋者。",
        "from": "T18n0889_004:0554c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名智金剛步。",
        "from": "T18n0889_004:0554c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復若於曼拏羅南方。",
        "from": "T18n0889_004:0554c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於右足前安左足。",
        "from": "T18n0889_004:0554c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然以右足跟踏左足指。",
        "from": "T18n0889_004:0554c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是互相繞。",
        "from": "T18n0889_004:0554c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速移速起如彼浮漚者。",
        "from": "T18n0889_004:0554c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名寶金剛步。",
        "from": "T18n0889_004:0554c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復若於曼拏羅西面。",
        "from": "T18n0889_004:0554c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以左足跟踏右足指。",
        "from": "T18n0889_004:0554c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於左邊畫地安足前。",
        "from": "T18n0889_004:0554c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以右足跟踏左足指。",
        "from": "T18n0889_004:0554c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於右邊畫地安足前。",
        "from": "T18n0889_004:0554c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名金剛蓮花步。",
        "from": "T18n0889_004:0554c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次先依甘露軍吒利立西北方。",
        "from": "T18n0889_004:0554c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以吠舍佉步行至東北方。",
        "from": "T18n0889_004:0554c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以精進心繞曼拏羅。",
        "from": "T18n0889_004:0554c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直至西南方。",
        "from": "T18n0889_004:0554c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨彼方面以種種讚歎供養。",
        "from": "T18n0889_004:0554c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復還本方位。",
        "from": "T18n0889_004:0554c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名羯磨金剛步。",
        "from": "T18n0889_004:0554c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復若於諸曼拏羅所。",
        "from": "T18n0889_004:0554c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初首作金剛步者。",
        "from": "T18n0889_004:0554c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須念金剛步真言。",
        "from": "T18n0889_004:0554c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛步真言曰。",
        "from": "T18n0889_004:0554c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)嚩日囉(二合)惹拏(二合)曩訖囉(二合)斛吽[口*發]當以如是儀攝受弟子。",
        "from": "T18n0889_004:0555a01_0",
        "context_with_next_sentence": false
    }
]