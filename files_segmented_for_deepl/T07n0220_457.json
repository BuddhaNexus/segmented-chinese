    },
    {
        "source_sentence": "第二分堅非堅品第六十四之二",
        "from": "T07n0220_457:0306a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸天當知！",
        "from": "T07n0220_457:0306a09_0",
        "context_with_next_sentence": true
    },
