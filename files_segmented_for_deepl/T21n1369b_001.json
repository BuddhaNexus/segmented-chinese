[
    {
        "source_sentence": "百千印陀羅尼經",
        "from": "T21n1369b_001:0886a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐于闐三藏實叉難陀譯",
        "from": "T21n1369b_001:0886a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1369b_001:0886a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在王舍城耆闍崛山中。",
        "from": "T21n1369b_001:0886a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾及無量菩薩俱。",
        "from": "T21n1369b_001:0886a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸比丘有陀羅尼名百千印。",
        "from": "T21n1369b_001:0886a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當共受持。",
        "from": "T21n1369b_001:0886a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪時。",
        "from": "T21n1369b_001:0886a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應先歸命金色廣顏光明幢佛。",
        "from": "T21n1369b_001:0886a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼佛。",
        "from": "T21n1369b_001:0886a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說根本陀羅尼曰。",
        "from": "T21n1369b_001:0886a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛姪他(一)唵(引聲二)菩提菩提菩提菩提(三)薩婆怛他揭多瞿折囉(四)馱囉馱囉(五)訶囉訶囉(六)鉢囉呵囉鉢囉呵囉(七)莫訶菩提質多(八)注盧注盧(九)設多曷審彌珊招地低(十)薩婆怛他揭多地瑟他(長聲)阿毘瑟低(十一)具儜具那鉢底(十二)勃陀具那婆娑(下去)嘶(十三)蔑囇蔑囇(十四)伽伽那怛囇(十五)薩婆怛他揭多地瑟恥低那婆薩怛囇(十六)睒摩睒摩(十七)鉢囉睒摩鉢囉睒摩(十八)薩婆播波鉢囉睒摩寧(十九)薩婆播波毘戍達寧(二十)虎盧虎盧菩提末伽三鉢囉嘶替低(二十一)薩婆怛他揭多鉢囉底瑟恥多戍提薩婆訶(二十二)爾時世尊。",
        "from": "T21n1369b_001:0886a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復為大眾說心呪曰。",
        "from": "T21n1369b_001:0886b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)薩婆怛他揭多吠婆盧吉帝(二)社耶社耶薩婆訶(三)爾時世尊。",
        "from": "T21n1369b_001:0886b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復更宣說隨心呪曰。",
        "from": "T21n1369b_001:0886b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵虎嚧虎嚧(一)[示*上]耶目磎薩婆訶(二)若有比丘比丘尼優婆塞優婆夷及餘淨信善男女等造塔之時。",
        "from": "T21n1369b_001:0886b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此陀羅尼句置於塔中。",
        "from": "T21n1369b_001:0886b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便得具足造百千塔殊勝功德無異。",
        "from": "T21n1369b_001:0886b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸比丘天龍八部一切眾會。",
        "from": "T21n1369b_001:0886b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行。",
        "from": "T21n1369b_001:0886b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千印陀羅尼經",
        "from": "T21n1369b_001:0886b16_0",
        "context_with_next_sentence": false
    }
]