[
    {
        "source_sentence": "得依釋序文緣起",
        "from": "X88n1655_001:0392a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通塞隆夷。",
        "from": "X88n1655_001:0392a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理所固有。",
        "from": "X88n1655_001:0392a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道之興廢。",
        "from": "X88n1655_001:0392a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必繫乎人。",
        "from": "X88n1655_001:0392a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得其人則其道興。",
        "from": "X88n1655_001:0392a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡其人則其道廢。",
        "from": "X88n1655_001:0392a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人能弘道。",
        "from": "X88n1655_001:0392a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道假人弘。",
        "from": "X88n1655_001:0392a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其斯之謂歟。",
        "from": "X88n1655_001:0392a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛之道。",
        "from": "X88n1655_001:0392a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒定慧而已矣。",
        "from": "X88n1655_001:0392a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而惟戒律壽命于道。",
        "from": "X88n1655_001:0392a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故南山曰。",
        "from": "X88n1655_001:0392a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律為法命。",
        "from": "X88n1655_001:0392a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘則命全。",
        "from": "X88n1655_001:0392a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若其不弘。",
        "from": "X88n1655_001:0392a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法斯滅。",
        "from": "X88n1655_001:0392a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼。",
        "from": "X88n1655_001:0392a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒律可廢矣哉。",
        "from": "X88n1655_001:0392a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "支那戒律。",
        "from": "X88n1655_001:0392a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自靈芝大智祖入無聲定之後。",
        "from": "X88n1655_001:0392a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖代不乏人。",
        "from": "X88n1655_001:0392a10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而其法漸晦。",
        "from": "X88n1655_001:0392a10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元明以來。",
        "from": "X88n1655_001:0392a10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "典型盡失。",
        "from": "X88n1655_001:0392a10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬曆間有古心律師。",
        "from": "X88n1655_001:0392a11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傑出于世。",
        "from": "X88n1655_001:0392a11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而法復大興。",
        "from": "X88n1655_001:0392a11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦道假人弘也。",
        "from": "X88n1655_001:0392a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律師諱如馨。",
        "from": "X88n1655_001:0392a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字古心。",
        "from": "X88n1655_001:0392a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溧陽楊氏子。",
        "from": "X88n1655_001:0392a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既出俗。",
        "from": "X88n1655_001:0392a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慨律學荒蕪。",
        "from": "X88n1655_001:0392a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步禮五臺。",
        "from": "X88n1655_001:0392a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求見文殊受戒。",
        "from": "X88n1655_001:0392a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至半山中。",
        "from": "X88n1655_001:0392a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一婆子捧僧伽梨問曰汝求何事。",
        "from": "X88n1655_001:0392a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰求見文殊菩薩親受大戒。",
        "from": "X88n1655_001:0392a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆曰持衣來否。",
        "from": "X88n1655_001:0392a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰未。",
        "from": "X88n1655_001:0392a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆曰此衣與汝。",
        "from": "X88n1655_001:0392a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師手接衣。",
        "from": "X88n1655_001:0392a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆標指曰那不是文殊麼。",
        "from": "X88n1655_001:0392a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔一回顧。",
        "from": "X88n1655_001:0392a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆子不見。",
        "from": "X88n1655_001:0392a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩於雲中垂手摩師頂曰。",
        "from": "X88n1655_001:0392a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古心比丘。",
        "from": "X88n1655_001:0392a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊為汝受戒竟。",
        "from": "X88n1655_001:0392a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師於言下頓悟心地法門。",
        "from": "X88n1655_001:0392a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視大小乘律如自己胸中流出。",
        "from": "X88n1655_001:0392a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂還金陵中興戒法。",
        "from": "X88n1655_001:0392a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有雪浪法師。",
        "from": "X88n1655_001:0392a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉敕修長干寶塔。",
        "from": "X88n1655_001:0392a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "工將告竣。",
        "from": "X88n1655_001:0392a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔頂艱舉。",
        "from": "X88n1655_001:0392a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心勿悅。",
        "from": "X88n1655_001:0392a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少頃隱几而臥。",
        "from": "X88n1655_001:0392a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢神人慰曰。",
        "from": "X88n1655_001:0392a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "異日優波離尊者振錫繞塔。",
        "from": "X88n1655_001:0392a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂竅自投。",
        "from": "X88n1655_001:0392a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾何疑慮。",
        "from": "X88n1655_001:0392a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明旦師率弟子執杖繞時。",
        "from": "X88n1655_001:0392a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂果自上。",
        "from": "X88n1655_001:0392a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世人咸信為波離再轉也。",
        "from": "X88n1655_001:0392a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時神宗皇帝御讚曰。",
        "from": "X88n1655_001:0392a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞻其貌。",
        "from": "X88n1655_001:0392a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知其人。",
        "from": "X88n1655_001:0392a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入三昧。",
        "from": "X88n1655_001:0392b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕六塵。",
        "from": "X88n1655_001:0392b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔波離。",
        "from": "X88n1655_001:0392b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今古心。",
        "from": "X88n1655_001:0392b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷寂諡號慧雲。",
        "from": "X88n1655_001:0392b01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其嗣法者三昧律師。",
        "from": "X88n1655_001:0392b01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律師諱寂光。",
        "from": "X88n1655_001:0392b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號三昧。",
        "from": "X88n1655_001:0392b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓜渚錢氏子也。",
        "from": "X88n1655_001:0392b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初依雪浪法師習賢首教觀。",
        "from": "X88n1655_001:0392b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次求古心律師受具足大戒於潤州甘露寺。",
        "from": "X88n1655_001:0392b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親炙有年。",
        "from": "X88n1655_001:0392b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟律儀是任。",
        "from": "X88n1655_001:0392b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心師嘉其行解。",
        "from": "X88n1655_001:0392b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳授毗尼。",
        "from": "X88n1655_001:0392b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師始行道豫章。",
        "from": "X88n1655_001:0392b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緇素敦請開戒於廬山東林寺。",
        "from": "X88n1655_001:0392b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陸地忽透千葉白蓮一十八朵。",
        "from": "X88n1655_001:0392b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔慧遠大師臨滅度時對眾示曰。",
        "from": "X88n1655_001:0392b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有白蓮重開。",
        "from": "X88n1655_001:0392b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當再來教化矣。",
        "from": "X88n1655_001:0392b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自晉迄明。",
        "from": "X88n1655_001:0392b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枯而不榮。",
        "from": "X88n1655_001:0392b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "池久為地。",
        "from": "X88n1655_001:0392b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師到此山。",
        "from": "X88n1655_001:0392b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白蓮花開。",
        "from": "X88n1655_001:0392b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時人憶昔符讖。",
        "from": "X88n1655_001:0392b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆稱師為遠師再來也。",
        "from": "X88n1655_001:0392b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師自萬曆乙卯至庚申。",
        "from": "X88n1655_001:0392b10_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六載住山。",
        "from": "X88n1655_001:0392b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闡揚淨土。",
        "from": "X88n1655_001:0392b11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方學者來歸不下二千指。",
        "from": "X88n1655_001:0392b11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於金陵預定時日端坐而化。",
        "from": "X88n1655_001:0392b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生平神異甚多。",
        "from": "X88n1655_001:0392b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詳如銘傳。",
        "from": "X88n1655_001:0392b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其傳法上首曰見月律師。",
        "from": "X88n1655_001:0392b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律師諱讀體。",
        "from": "X88n1655_001:0392b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號見月。",
        "from": "X88n1655_001:0392b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗姓許氏。",
        "from": "X88n1655_001:0392b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滇南白鹿郡之人。",
        "from": "X88n1655_001:0392b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖籍江南句容。",
        "from": "X88n1655_001:0392b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪武初開滇黔。",
        "from": "X88n1655_001:0392b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以軍功封昭武將軍。",
        "from": "X88n1655_001:0392b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世襲指揮使。",
        "from": "X88n1655_001:0392b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂世居白鹿焉。",
        "from": "X88n1655_001:0392b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父胤昌。",
        "from": "X88n1655_001:0392b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "母吳氏。",
        "from": "X88n1655_001:0392b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢明月投懷而生師。",
        "from": "X88n1655_001:0392b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師生而神敏。",
        "from": "X88n1655_001:0392b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稍長輒有曠致逸情。",
        "from": "X88n1655_001:0392b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善繪事。",
        "from": "X88n1655_001:0392b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尤工大士像。",
        "from": "X88n1655_001:0392b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人爭寶之。",
        "from": "X88n1655_001:0392b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時稱為小吳道子。",
        "from": "X88n1655_001:0392b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年十四父母繼卒。",
        "from": "X88n1655_001:0392b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伯無子。",
        "from": "X88n1655_001:0392b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "育師為嗣。",
        "from": "X88n1655_001:0392b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至二十七。",
        "from": "X88n1655_001:0392b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽念世相無常。",
        "from": "X88n1655_001:0392b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄襲爵而去於劒川州赤宕嵓。",
        "from": "X88n1655_001:0392b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇一蘭若老僧。",
        "from": "X88n1655_001:0392b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與語甚契。",
        "from": "X88n1655_001:0392b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授華嚴。",
        "from": "X88n1655_001:0392b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱世主玅嚴品有省。",
        "from": "X88n1655_001:0392b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂詣寶洪山亮如法師乞度。",
        "from": "X88n1655_001:0392b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先一夕如夢一人身披袈裟。",
        "from": "X88n1655_001:0392b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾僧擁跽而求剃染。",
        "from": "X88n1655_001:0392b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及旦見師。",
        "from": "X88n1655_001:0392b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜為再來人也。",
        "from": "X88n1655_001:0392b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂與禁戒。",
        "from": "X88n1655_001:0392b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞江南有三昧律師。",
        "from": "X88n1655_001:0392b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慕之。",
        "from": "X88n1655_001:0392b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偕友成拙携瓢笠東行。",
        "from": "X88n1655_001:0392b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "艱苦備常。",
        "from": "X88n1655_001:0392b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先入南岳參傘居道人顓大師。",
        "from": "X88n1655_001:0392c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代演楞嚴四依解。",
        "from": "X88n1655_001:0392c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼登破額山馮茂山禮諸祖道場。",
        "from": "X88n1655_001:0392c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進九華。",
        "from": "X88n1655_001:0392c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝五臺。",
        "from": "X88n1655_001:0392c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再渡大江。",
        "from": "X88n1655_001:0392c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始遇昧師于海潮菴。",
        "from": "X88n1655_001:0392c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓具戒。",
        "from": "X88n1655_001:0392c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充上座。",
        "from": "X88n1655_001:0392c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代講梵網。",
        "from": "X88n1655_001:0392c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾莫不稱善。",
        "from": "X88n1655_001:0392c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師猶欿然不自足。",
        "from": "X88n1655_001:0392c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃于藏中撿四分廣律及餘部律文覈之。",
        "from": "X88n1655_001:0392c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇壅滯。",
        "from": "X88n1655_001:0392c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禱佛求解。",
        "from": "X88n1655_001:0392c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默坐移時。",
        "from": "X88n1655_001:0392c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渙然冰釋。",
        "from": "X88n1655_001:0392c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次從昧師傳戒于金陵報恩寺。",
        "from": "X88n1655_001:0392c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座下千人。",
        "from": "X88n1655_001:0392c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師臨壇教授。",
        "from": "X88n1655_001:0392c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽憶昔時夢至一大寺。",
        "from": "X88n1655_001:0392c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金碧交輝。",
        "from": "X88n1655_001:0392c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻雲集。",
        "from": "X88n1655_001:0392c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自顧已成僧相。",
        "from": "X88n1655_001:0392c08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一瞿曇丹衣高座。",
        "from": "X88n1655_001:0392c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "招上授經命講。",
        "from": "X88n1655_001:0392c08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾皆跪聽。",
        "from": "X88n1655_001:0392c09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汗流而覺。",
        "from": "X88n1655_001:0392c09_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及是所見恍符前夢焉。",
        "from": "X88n1655_001:0392c09_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後隨昧師主華山。",
        "from": "X88n1655_001:0392c09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以教授兼掌院務。",
        "from": "X88n1655_001:0392c10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廢寢忘飡。",
        "from": "X88n1655_001:0392c10_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始終不怠。",
        "from": "X88n1655_001:0392c10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昧師甞語眾曰。",
        "from": "X88n1655_001:0392c11_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老人三十年戒幢。",
        "from": "X88n1655_001:0392c11_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若非見月。",
        "from": "X88n1655_001:0392c11_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幾被摧折。",
        "from": "X88n1655_001:0392c11_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂日。",
        "from": "X88n1655_001:0392c12_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取榮昌公主法衣并諸部戒本付之。",
        "from": "X88n1655_001:0392c12_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師嗣席。",
        "from": "X88n1655_001:0392c12_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以十誓勵眾。",
        "from": "X88n1655_001:0392c13_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一不與剃度為徒。",
        "from": "X88n1655_001:0392c13_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二不受納資養老。",
        "from": "X88n1655_001:0392c13_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三不攢單給疏。",
        "from": "X88n1655_001:0392c14_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四不積蓄香儀。",
        "from": "X88n1655_001:0392c14_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五不私備果食。",
        "from": "X88n1655_001:0392c14_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六不私設廚庫。",
        "from": "X88n1655_001:0392c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七不避作務。",
        "from": "X88n1655_001:0392c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八不行弔賀。",
        "from": "X88n1655_001:0392c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九不立化主募緣。",
        "from": "X88n1655_001:0392c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十不許絲衣晚食。",
        "from": "X88n1655_001:0392c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有違約者決不留住。",
        "from": "X88n1655_001:0392c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自後依律受具。",
        "from": "X88n1655_001:0392c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結界安居。",
        "from": "X88n1655_001:0392c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人見聞者咸謂南山再世也。",
        "from": "X88n1655_001:0392c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順治三年官兵入山搜捕土賊。",
        "from": "X88n1655_001:0392c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師與大眾悉被押赴軍前。",
        "from": "X88n1655_001:0392c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時巴廒二將軍憤師容。",
        "from": "X88n1655_001:0392c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱欲加極罪。",
        "from": "X88n1655_001:0392c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住田產悉沒於官。",
        "from": "X88n1655_001:0392c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師雖在劒戟林中。",
        "from": "X88n1655_001:0392c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神色不變。",
        "from": "X88n1655_001:0392c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從容對曰。",
        "from": "X88n1655_001:0392c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華山大路焉能禁彼往來。",
        "from": "X88n1655_001:0392c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂感巴廒諸公舒誠敬服。",
        "from": "X88n1655_001:0392c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願為護法。",
        "from": "X88n1655_001:0392c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請師還山并復田地。",
        "from": "X88n1655_001:0392c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "給帖永照。",
        "from": "X88n1655_001:0392c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是躳修般舟三昧。",
        "from": "X88n1655_001:0392c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾楷模。",
        "from": "X88n1655_001:0392c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十晝夜不坐不臥。",
        "from": "X88n1655_001:0392c23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此者二次。",
        "from": "X88n1655_001:0392c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復遵祇園遺制。",
        "from": "X88n1655_001:0392c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建石戒壇于銅殿之右。",
        "from": "X88n1655_001:0392c24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斸基之夜。",
        "from": "X88n1655_001:0392c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感大士現瑞炳然。",
        "from": "X88n1655_001:0392c24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇殿交光。",
        "from": "X88n1655_001:0393a01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直冲霄漢。",
        "from": "X88n1655_001:0393a01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師開壇說戒。",
        "from": "X88n1655_001:0393a01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少則五千指。",
        "from": "X88n1655_001:0393a01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多至萬四千指。",
        "from": "X88n1655_001:0393a02_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受別請如常州之天寧。",
        "from": "X88n1655_001:0393a02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真州之五臺。",
        "from": "X88n1655_001:0393a02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金陵之碧峰及紫竹林。",
        "from": "X88n1655_001:0393a03_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿遷之極樂并本山慈應天隆。",
        "from": "X88n1655_001:0393a03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所至道俗老幼闐咽街衢。",
        "from": "X88n1655_001:0393a04_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將謝世。",
        "from": "X88n1655_001:0393a04_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示微疾。",
        "from": "X88n1655_001:0393a04_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑諸門人曰。",
        "from": "X88n1655_001:0393a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿進湯藥。",
        "from": "X88n1655_001:0393a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更七日行矣。",
        "from": "X88n1655_001:0393a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至期端坐而逝。",
        "from": "X88n1655_001:0393a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師生于萬曆辛丑年三月三日。",
        "from": "X88n1655_001:0393a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂于康熈己未年正月二十二日也。",
        "from": "X88n1655_001:0393a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世壽七十九。",
        "from": "X88n1655_001:0393a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧臘四十四。",
        "from": "X88n1655_001:0393a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐夏三十三。",
        "from": "X88n1655_001:0393a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經七日茶毗時。",
        "from": "X88n1655_001:0393a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾弟子遐邇皆集。",
        "from": "X88n1655_001:0393a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲鳴徧野。",
        "from": "X88n1655_001:0393a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛聲震天。",
        "from": "X88n1655_001:0393a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燄光中或見佛相。",
        "from": "X88n1655_001:0393a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紫煙內或現蓮華。",
        "from": "X88n1655_001:0393a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火滅後收取靈骨。",
        "from": "X88n1655_001:0393a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲舍利五色者不可勝數。",
        "from": "X88n1655_001:0393a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師一生來八坐道場。",
        "from": "X88n1655_001:0393a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開戒七十餘期。",
        "from": "X88n1655_001:0393a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法嗣六十餘人。",
        "from": "X88n1655_001:0393a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門弟子以數萬計。",
        "from": "X88n1655_001:0393a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所著止持會集(十六卷)．作持續釋(十五卷)．傳戒正範(四卷)．大乘玄義(一卷)．藥師懺法(一卷)．剃度正範(一卷)．僧行軌則(一卷)．三歸五八戒正範(一卷)．教誡尼正範(一卷)．黑白布薩(一卷)．幽冥戒正範(一卷)等諸書。",
        "from": "X88n1655_001:0393a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竝行於世。",
        "from": "X88n1655_001:0393a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身長大。",
        "from": "X88n1655_001:0393a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂肉髻。",
        "from": "X88n1655_001:0393a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲若鉅鐘。",
        "from": "X88n1655_001:0393a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貌類古佛。",
        "from": "X88n1655_001:0393a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一善士自滇南來參云。",
        "from": "X88n1655_001:0393a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子曾禮鷄足山求見迦葉。",
        "from": "X88n1655_001:0393a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢感韋天示云。",
        "from": "X88n1655_001:0393a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者已至華山弘律。",
        "from": "X88n1655_001:0393a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾欲親覲可往見焉。",
        "from": "X88n1655_001:0393a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故來禮拜。",
        "from": "X88n1655_001:0393a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師恐眾惑。",
        "from": "X88n1655_001:0393a18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕不容傳。",
        "from": "X88n1655_001:0393a18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於馬陵之枯泉自溢。",
        "from": "X88n1655_001:0393a19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍眠之三世冤消。",
        "from": "X88n1655_001:0393a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥戒歸依。",
        "from": "X88n1655_001:0393a19_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神龍護法。",
        "from": "X88n1655_001:0393a20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種靈奇難可具錄。",
        "from": "X88n1655_001:0393a20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘詳御史李模督河孫在豐二墖銘。",
        "from": "X88n1655_001:0393a20_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翰林尤侗侍御方享咸二傳。",
        "from": "X88n1655_001:0393a21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及方伯丁思孔道行碑中。",
        "from": "X88n1655_001:0393a21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有宜潔律師者。",
        "from": "X88n1655_001:0393a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "係師法嗣。",
        "from": "X88n1655_001:0393a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名書玉。",
        "from": "X88n1655_001:0393a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜潔字也。",
        "from": "X88n1655_001:0393a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別號佛菴。",
        "from": "X88n1655_001:0393a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今現住古杭昭慶。",
        "from": "X88n1655_001:0393a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法度生。",
        "from": "X88n1655_001:0393a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其學才挺拔。",
        "from": "X88n1655_001:0393a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道德高明。",
        "from": "X88n1655_001:0393a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固是一世之雄。",
        "from": "X88n1655_001:0393b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不忝為慧雲老祖四世之孫者也。",
        "from": "X88n1655_001:0393b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辛巳夏予甞應請抵肥後州熊本城講梵網於神護教寺。",
        "from": "X88n1655_001:0393b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肥前州島原城江東禪寺主慇請開戒於其寺。",
        "from": "X88n1655_001:0393b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因留錫結冬安居。",
        "from": "X88n1655_001:0393b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "制前寺主要予遊長崎。",
        "from": "X88n1655_001:0393b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既到。",
        "from": "X88n1655_001:0393b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首訪東明山興福寺。",
        "from": "X88n1655_001:0393b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺主悅峰章禪師。",
        "from": "X88n1655_001:0393b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "支那人也。",
        "from": "X88n1655_001:0393b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜予來訪。",
        "from": "X88n1655_001:0393b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[款-士+止]待優渥。",
        "from": "X88n1655_001:0393b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "促榻對談。",
        "from": "X88n1655_001:0393b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霏霏如吐玉屑。",
        "from": "X88n1655_001:0393b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出毗尼日用切要香乳記二卷見贈。",
        "from": "X88n1655_001:0393b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毗尼日用切要即見月和尚所集。",
        "from": "X88n1655_001:0393b07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而宜潔律師隨而箋之曰香乳記。",
        "from": "X88n1655_001:0393b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予恭讀之。",
        "from": "X88n1655_001:0393b08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又因禪師所談。",
        "from": "X88n1655_001:0393b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方知律師現在昭慶。",
        "from": "X88n1655_001:0393b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂乃託禪師以六物圖依釋四卷附商舶寄貽。",
        "from": "X88n1655_001:0393b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律師見而隨喜。",
        "from": "X88n1655_001:0393b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序以證之。",
        "from": "X88n1655_001:0393b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并贈其所著羯磨儀式二冊[田/廾]予。",
        "from": "X88n1655_001:0393b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今茲戊子秋九月二十五日敬而領之。",
        "from": "X88n1655_001:0393b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒述一偈以誌其喜。",
        "from": "X88n1655_001:0393b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前貽依釋。",
        "from": "X88n1655_001:0393b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今領此贈。",
        "from": "X88n1655_001:0393b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竝賴東明禪師勞神用也。",
        "from": "X88n1655_001:0393b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序文既梓。",
        "from": "X88n1655_001:0393b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冠於卷端。",
        "from": "X88n1655_001:0393b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "私恐人不審其所由。",
        "from": "X88n1655_001:0393b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰緣起一篇。",
        "from": "X88n1655_001:0393b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸師事實皆依香乳記出之。",
        "from": "X88n1655_001:0393b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼取於廬山志。",
        "from": "X88n1655_001:0393b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文全存而不敢殺者。",
        "from": "X88n1655_001:0393b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人知支那戒律中興繼承有得其人。",
        "from": "X88n1655_001:0393b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "保佛道壽命於濁末之運云。",
        "from": "X88n1655_001:0393b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旹",
        "from": "X88n1655_001:0393b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶永五年歲在徒維困敦冬至後三日",
        "from": "X88n1655_001:0393b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江左安養蘭若苾芻湛堂淑槃譚識",
        "from": "X88n1655_001:0393b20_0",
        "context_with_next_sentence": false
    }
]