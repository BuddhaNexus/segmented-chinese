[
    {
        "source_sentence": "賢首五教斷證三覺揀濫圖",
        "from": "X58n1026_001:0696b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清浙水慈雲沙門續法集門人嚴指較",
        "from": "X58n1026_001:0696b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東傳三藏。",
        "from": "X58n1026_001:0696b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迨唐始足。",
        "from": "X58n1026_001:0696b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "列祖判教。",
        "from": "X58n1026_001:0696b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢首方周。",
        "from": "X58n1026_001:0696b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良由典誥既多。",
        "from": "X58n1026_001:0696b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知見自廣。",
        "from": "X58n1026_001:0696b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約義判教。",
        "from": "X58n1026_001:0696b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備所未備。",
        "from": "X58n1026_001:0696b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以後後勝於前前。",
        "from": "X58n1026_001:0696b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢首二十餘部。",
        "from": "X58n1026_001:0696b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清涼五十餘部。",
        "from": "X58n1026_001:0696b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圭山十餘部。",
        "from": "X58n1026_001:0696b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆詳教觀斷證。",
        "from": "X58n1026_001:0696b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況五教斷證。",
        "from": "X58n1026_001:0696b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "原出經論。",
        "from": "X58n1026_001:0696b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前尚未來。",
        "from": "X58n1026_001:0696b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後盡流至。",
        "from": "X58n1026_001:0696b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人未之察。",
        "from": "X58n1026_001:0696b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反曰無斷無證。",
        "from": "X58n1026_001:0696b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不屈抑佛祖也歟。",
        "from": "X58n1026_001:0696b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(續法)痛心。",
        "from": "X58n1026_001:0696b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂準賢宗諸大部中。",
        "from": "X58n1026_001:0696b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "錄出斷證。",
        "from": "X58n1026_001:0696b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "排圖貫線。",
        "from": "X58n1026_001:0696b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶使學者。",
        "from": "X58n1026_001:0696b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一家判釋。",
        "from": "X58n1026_001:0696b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明如指掌。",
        "from": "X58n1026_001:0696b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無纖疑滯。",
        "from": "X58n1026_001:0696b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果能從小發心。",
        "from": "X58n1026_001:0696b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至圓妙覺。",
        "from": "X58n1026_001:0696b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中一一解行無謬。",
        "from": "X58n1026_001:0696b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢得斷執障於蓮華藏剎。",
        "from": "X58n1026_001:0696b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證法界於毗盧性海。",
        "from": "X58n1026_001:0696b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸歷頓超。",
        "from": "X58n1026_001:0696b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又何難哉。",
        "from": "X58n1026_001:0696b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此亦略示其梗槩耳。",
        "from": "X58n1026_001:0696b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲委明。",
        "from": "X58n1026_001:0696b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣閱教儀諸書　三覺　三五位別。",
        "from": "X58n1026_001:0696b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一覺性同。",
        "from": "X58n1026_001:0696b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但能悟知。",
        "from": "X58n1026_001:0696b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓圓妙覺。",
        "from": "X58n1026_001:0696b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本覺位。",
        "from": "X58n1026_001:0696b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五教俱不覺。",
        "from": "X58n1026_001:0696b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓覺位。",
        "from": "X58n1026_001:0696b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小則羅漢辟支佛位。",
        "from": "X58n1026_001:0696b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後四俱妙覺。",
        "from": "X58n1026_001:0696b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始覺位。",
        "from": "X58n1026_001:0696b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從發心極於等覺。",
        "from": "X58n1026_001:0696b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中復有三位。",
        "from": "X58n1026_001:0696b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一。",
        "from": "X58n1026_001:0696b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名字覺位。",
        "from": "X58n1026_001:0696b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小發心至停心。",
        "from": "X58n1026_001:0696b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始等俱十信。",
        "from": "X58n1026_001:0696b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二。",
        "from": "X58n1026_001:0696b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相似覺位。",
        "from": "X58n1026_001:0696b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小別相至世第一。",
        "from": "X58n1026_001:0696b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後四俱三賢四加。",
        "from": "X58n1026_001:0696b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三。",
        "from": "X58n1026_001:0696b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨分覺位。",
        "from": "X58n1026_001:0696b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小初果至三果。",
        "from": "X58n1026_001:0696b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始等俱十地等覺。",
        "from": "X58n1026_001:0696b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其間高下階降不等。",
        "from": "X58n1026_001:0696b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦隨當教斷證以釋。",
        "from": "X58n1026_001:0696c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故此三覺五位。",
        "from": "X58n1026_001:0696c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能判教相之權實也。",
        "from": "X58n1026_001:0696c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一乘不共教無盡妙覺根本佛性無障礙法界○圓教(此教斷證。",
        "from": "X58n1026_001:0697a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如拆錦花。",
        "from": "X58n1026_001:0698a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如鎔金獅)(初住至妙。",
        "from": "X58n1026_001:0698a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "品數準終。",
        "from": "X58n1026_001:0698a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但此三地。",
        "from": "X58n1026_001:0698a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超頓妙覺。",
        "from": "X58n1026_001:0698a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便有六十二品)。",
        "from": "X58n1026_001:0698a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔本〕不覺(謂不覺法界性也)",
        "from": "X58n1026_001:0698a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔名字〕",
        "from": "X58n1026_001:0698a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心(謂發普賢廣大行願心也)",
        "from": "X58n1026_001:0698a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初信(除我執分別俱生現。",
        "from": "X58n1026_001:0698a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與小初果。",
        "from": "X58n1026_001:0698a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始初地。",
        "from": "X58n1026_001:0698a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終初住頓七信齊)七信(除法執分別俱生現。",
        "from": "X58n1026_001:0698a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與小四果。",
        "from": "X58n1026_001:0698a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始七地。",
        "from": "X58n1026_001:0698a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終七住。",
        "from": "X58n1026_001:0698a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓初住齊)九信(伏二執分別俱生麤種。",
        "from": "X58n1026_001:0698a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與始妙覺。",
        "from": "X58n1026_001:0698a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終二行。",
        "from": "X58n1026_001:0698a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓七住齊)十信(伏二執分別俱生細種。",
        "from": "X58n1026_001:0698a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與終十行。",
        "from": "X58n1026_001:0698a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓十住齊上皆明圓伏中伏斷。",
        "from": "X58n1026_001:0698a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下方圓斷也)〔相似〕初住(除二執分別俱生麤種。",
        "from": "X58n1026_001:0698a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與終初向。",
        "from": "X58n1026_001:0698a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓初行齊)十住(除二執分別俱生細種。",
        "from": "X58n1026_001:0698a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與終十向。",
        "from": "X58n1026_001:0698a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓十行齊)初行(圓斷二執分別俱生現種盡。",
        "from": "X58n1026_001:0698a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更斷習氣一分。",
        "from": "X58n1026_001:0698a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與終初地。",
        "from": "X58n1026_001:0698a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓初向齊)初向(圓斷二執習氣十一分。",
        "from": "X58n1026_001:0698a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與終等覺。",
        "from": "X58n1026_001:0698a17_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓初地齊)十向(圓斷習氣二十分與頓十地齊)四加(圓斷十向習盡。",
        "from": "X58n1026_001:0698a17_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進斷初地習氣)〔隨分〕初地(圓斷習氣二十一分。",
        "from": "X58n1026_001:0698a19_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與頓等覺齊)二地(圓斷習氣二十二分。",
        "from": "X58n1026_001:0698a21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與頓妙覺齊)三地(圓斷習氣二十三分。",
        "from": "X58n1026_001:0698a22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓教不知名目)等覺(圓斷習氣三十一分。",
        "from": "X58n1026_001:0698a23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進斷佛地習氣一分)〔圓〕妙覺(圓斷二執無盡現種習盡。",
        "from": "X58n1026_001:0698a24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在無障礙法界土。",
        "from": "X58n1026_001:0698b01_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成無障礙法界佛。",
        "from": "X58n1026_001:0698b01_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐普融無盡師子座。",
        "from": "X58n1026_001:0698b01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說緣起法界法令偏教三乘并上上根凡夫外道轉偏成圖也)○頓教(此教斷證。",
        "from": "X58n1026_001:0698b01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如狂迷歇。",
        "from": "X58n1026_001:0698b03_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如睡夢覺)(本品準前。",
        "from": "X58n1026_001:0698b03_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中三地。",
        "from": "X58n1026_001:0698b04_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦超終妙。",
        "from": "X58n1026_001:0698b04_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增成五十二品)。",
        "from": "X58n1026_001:0698b04_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔本〕不覺(謂不覺真如性也)",
        "from": "X58n1026_001:0698b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔名字〕",
        "from": "X58n1026_001:0698b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心(謂發內證聖智心也)",
        "from": "X58n1026_001:0698b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初信(伏二執分別俱生現。",
        "from": "X58n1026_001:0698b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與小加行。",
        "from": "X58n1026_001:0698b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始第一。",
        "from": "X58n1026_001:0698b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終十信齊)七信(除我執分別俱生現。",
        "from": "X58n1026_001:0698b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與小初果。",
        "from": "X58n1026_001:0698b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始初地。",
        "from": "X58n1026_001:0698b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終初住齊)(上皆頓伏。",
        "from": "X58n1026_001:0698b09_6",
        "context_with_next_sentence": true
    },
    {
