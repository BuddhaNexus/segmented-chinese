    },
    {
        "source_sentence": "受心法皆不淨。",
        "from": "X58n1026_001:0699b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至觀法無我。",
        "from": "X58n1026_001:0699b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身受心亦無我)(此上二位。",
        "from": "X58n1026_001:0699b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯觀欲界苦諦。",
        "from": "X58n1026_001:0699b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏煩惱惑)。",
        "from": "X58n1026_001:0699b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "(已上資糧位)。",
        "from": "X58n1026_001:0699b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煖(剏觀欲界四諦。",
        "from": "X58n1026_001:0699b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修十六行)頂(用觀同前。",
        "from": "X58n1026_001:0699b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉更明朗)忍(下忍遍觀八諦。",
        "from": "X58n1026_001:0699b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修三十二行)(中忍漸減緣行。",
        "from": "X58n1026_001:0699b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一行二剎那在)(上忍亦唯觀欲界苦。",
        "from": "X58n1026_001:0699b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一行二剎那中。",
        "from": "X58n1026_001:0699b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前一剎那盡)世第一(一行二剎那中。",
        "from": "X58n1026_001:0699b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後一剎那盡。",
        "from": "X58n1026_001:0699b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏除分別煩惱)(已上加行位)。",
        "from": "X58n1026_001:0699b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔隨分〕",
        "from": "X58n1026_001:0699b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須陀洹(斷三界八十八使分別見煩惱)(通達位)。",
        "from": "X58n1026_001:0699b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯陀含(斷欲界前六品俱生思)",
        "from": "X58n1026_001:0699b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿那含(斷欲界後三品。",
        "from": "X58n1026_001:0699b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進斷上二界七十二品俱生思煩惱)(已上修習位)。",
        "from": "X58n1026_001:0699b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔圓〕阿羅漢(斷我執分別俱生煩惱盡。",
        "from": "X58n1026_001:0699b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證生空理。",
        "from": "X58n1026_001:0699b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住有餘無餘涅槃)(無學位)。",
        "from": "X58n1026_001:0699b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔圓〕辟支(斷見思煩惱障。",
        "from": "X58n1026_001:0699b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與聲聞同。",
        "from": "X58n1026_001:0699b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更侵習氣。",
        "from": "X58n1026_001:0699b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故居其上。",
        "from": "X58n1026_001:0699b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘理果亦同)(無學位)。",
        "from": "X58n1026_001:0699b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "〔圓〕佛(從初發心。",
        "from": "X58n1026_001:0699b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發四弘願。",
        "from": "X58n1026_001:0699b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三祇百劫。",
        "from": "X58n1026_001:0699b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行種相。",
        "from": "X58n1026_001:0699b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次入補處。",
        "from": "X58n1026_001:0699b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "托胎出家安坐不動。",
        "from": "X58n1026_001:0699b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發真無漏。",
        "from": "X58n1026_001:0699b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓斷見思煩惱習氣。",
        "from": "X58n1026_001:0699b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在染化土。",
        "from": "X58n1026_001:0699b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成劣應佛。",
        "from": "X58n1026_001:0699b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生草座上。",
        "from": "X58n1026_001:0699b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說諦緣法。",
        "from": "X58n1026_001:0699b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令下下凡夫外道。",
        "from": "X58n1026_001:0699b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉凡成聖也)(無學位)。",
        "from": "X58n1026_001:0699b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庚戌春。",
        "from": "X58n1026_001:0699b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豎錄此圖於單條紙上。",
        "from": "X58n1026_001:0699b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緇素輩不粘之座側。",
        "from": "X58n1026_001:0699b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則易於遺失。",
        "from": "X58n1026_001:0699b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重請方書。",
        "from": "X58n1026_001:0699b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辛酉臘月八。",
        "from": "X58n1026_001:0699b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再為橫鈔於冊頁。",
        "from": "X58n1026_001:0699b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不唯令行坐可閱。",
        "from": "X58n1026_001:0699b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而且流之遠與久也。",
        "from": "X58n1026_001:0699b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然觀者須不凝滯於佛。",
        "from": "X58n1026_001:0699b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作迷本逐末看。",
        "from": "X58n1026_001:0699b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豎則先上次下。",
        "from": "X58n1026_001:0699b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫則先前次後。",
        "from": "X58n1026_001:0699c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作返妄歸真看。",
        "from": "X58n1026_001:0699c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豎則先下次上。",
        "from": "X58n1026_001:0699c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫則先後次前。",
        "from": "X58n1026_001:0699c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人但知小始終頓圓。",
        "from": "X58n1026_001:0699c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知圓頓終始小。",
        "from": "X58n1026_001:0699c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今特圖出之。",
        "from": "X58n1026_001:0699c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令作兩觀。",
        "from": "X58n1026_001:0699c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以見其行布中。",
        "from": "X58n1026_001:0699c03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而實圓融無礙焉。",
        "from": "X58n1026_001:0699c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲灌頂行者續法題",
        "from": "X58n1026_001:0699c04_1",
        "context_with_next_sentence": false
    }
]