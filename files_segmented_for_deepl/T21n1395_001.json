[
    {
        "source_sentence": "拔濟苦難陀羅尼經",
        "from": "T21n1395_001:0912b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐三藏法師玄奘奉　詔譯",
        "from": "T21n1395_001:0912b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1395_001:0912b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時薄伽梵在室羅筏。",
        "from": "T21n1395_001:0912b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住誓多林給孤獨園。",
        "from": "T21n1395_001:0912b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與無央數聲聞菩薩摩訶薩俱。",
        "from": "T21n1395_001:0912b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸天人阿素洛等。",
        "from": "T21n1395_001:0912b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量大眾前後圍繞。",
        "from": "T21n1395_001:0912b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時眾中有一菩薩。",
        "from": "T21n1395_001:0912b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名不可說功德莊嚴。",
        "from": "T21n1395_001:0912b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起頂禮佛足。",
        "from": "T21n1395_001:0912b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白佛言。",
        "from": "T21n1395_001:0912b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊今此世界無量有情。",
        "from": "T21n1395_001:0912b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱因緣造諸惡業。",
        "from": "T21n1395_001:0912b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮地獄餓鬼傍生。",
        "from": "T21n1395_001:0912b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或天人中受諸劇苦。",
        "from": "T21n1395_001:0912b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願哀愍方便拔濟。",
        "from": "T21n1395_001:0912b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善男子善哉善哉。",
        "from": "T21n1395_001:0912b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能哀愍一切有情作如是請。",
        "from": "T21n1395_001:0912b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽諦聽。",
        "from": "T21n1395_001:0912b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今為汝略說拔濟眾苦方便。",
        "from": "T21n1395_001:0912b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子有佛世尊。",
        "from": "T21n1395_001:0912b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為不動如來應正等覺。",
        "from": "T21n1395_001:0912b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利樂諸有情故。",
        "from": "T21n1395_001:0912b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說陀羅尼令眾誦念。",
        "from": "T21n1395_001:0912b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T21n1395_001:0912b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯羯尼羯羯尼　魯折尼魯折尼　咄盧磔尼咄盧磔尼　怛邏薩尼怛羅薩尼　般刺底喝那般刺底喝那　薩縛羯莫般藍般邏般謎　莎訶若有善男子善女人。",
        "from": "T21n1395_001:0912b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠敬禮不動如來應正等覺受持此呪。",
        "from": "T21n1395_001:0912c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先所造作五無間業四重十惡。",
        "from": "T21n1395_001:0912c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀諸聖賢謗正法罪皆悉除滅。",
        "from": "T21n1395_001:0912c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時。",
        "from": "T21n1395_001:0912c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼不動佛與諸菩薩來現其前。",
        "from": "T21n1395_001:0912c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎慰喻令其歡喜。",
        "from": "T21n1395_001:0912c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告之言。",
        "from": "T21n1395_001:0912c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今來迎汝應隨我往所從佛國。",
        "from": "T21n1395_001:0912c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼命終已。",
        "from": "T21n1395_001:0912c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定往生不動如來清淨佛土。",
        "from": "T21n1395_001:0912c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子復有世尊。",
        "from": "T21n1395_001:0912c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名滅惡趣王如來應正等覺。",
        "from": "T21n1395_001:0912c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利樂諸有情故。",
        "from": "T21n1395_001:0912c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說陀羅尼令眾誦念。",
        "from": "T21n1395_001:0912c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T21n1395_001:0912c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輸達泥輸達泥　薩縛播波毘輸達泥　戍睇毘戍睇　薩縛羯莫毘戍睇　莎訶若有善男子善女人。",
        "from": "T21n1395_001:0912c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠禮敬滅惡趣王如來應正等覺受持此呪。",
        "from": "T21n1395_001:0912c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬四千劫常憶宿命。",
        "from": "T21n1395_001:0912c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所在生處得丈夫身。",
        "from": "T21n1395_001:0912c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足諸根深信因果。",
        "from": "T21n1395_001:0912c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善諸技術妙解諸論。",
        "from": "T21n1395_001:0912c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好行惠施厭捨諸欲。",
        "from": "T21n1395_001:0912c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不造惡業離諸危怖。",
        "from": "T21n1395_001:0912c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具正命慧眾所愛重。",
        "from": "T21n1395_001:0912c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常近善友恒聞正法。",
        "from": "T21n1395_001:0912c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求菩提心曾無暫捨。",
        "from": "T21n1395_001:0912c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸功德而自莊嚴。",
        "from": "T21n1395_001:0912c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具善律儀怖諸惡業。",
        "from": "T21n1395_001:0912c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒無匱乏調柔樂靜。",
        "from": "T21n1395_001:0912c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於天人中常受快樂。",
        "from": "T21n1395_001:0912c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證無上正等菩提。",
        "from": "T21n1395_001:0912c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不退於十到彼岸。",
        "from": "T21n1395_001:0912c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常願利樂一切有情。",
        "from": "T21n1395_001:0912c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸所修行非專自利。",
        "from": "T21n1395_001:0912c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在所生處常得見佛。",
        "from": "T21n1395_001:0912c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持正法預賢聖眾。",
        "from": "T21n1395_001:0912c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時薄伽梵說此經已。",
        "from": "T21n1395_001:0912c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞菩薩及諸天人阿素洛等。",
        "from": "T21n1395_001:0912c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說。",
        "from": "T21n1395_001:0912c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜。",
        "from": "T21n1395_001:0912c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受奉行。",
        "from": "T21n1395_001:0912c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔濟苦難陀羅尼經",
        "from": "T21n1395_001:0912c28_0",
        "context_with_next_sentence": false
    }
]