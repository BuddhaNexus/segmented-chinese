[
    {
        "source_sentence": "俱舍論實義疏卷第一(惣二萬八千偈)尊者悉地羅末底造(唐言安惠)　稽首薄伽眾德山　　稽首達磨大智海　稽首僧伽和合眾　　掣斯論主及吾師　我將螢耀助陽光　　隨力弘宣對法藏　為利群生法久住　　願以威神見護持分別界品第一七義。",
        "from": "T29n1561_001:0325a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂智圓滿。",
        "from": "T29n1561_001:0325a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷圓滿。",
        "from": "T29n1561_001:0325a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利他圓滿。",
        "from": "T29n1561_001:0325a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便圓滿。",
        "from": "T29n1561_001:0325a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應供圓滿。",
        "from": "T29n1561_001:0325a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "期心圓滿。",
        "from": "T29n1561_001:0325a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便圓滿。",
        "from": "T29n1561_001:0325a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由敬法故常樂聽聞。",
        "from": "T29n1561_001:0325a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由聽聞故發生聞惠。",
        "from": "T29n1561_001:0325a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由聞惠故發□思惠故。",
        "from": "T29n1561_001:0325a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發起修惠故生無漏惠。",
        "from": "T29n1561_001:0325a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由無漏惠能斷諸惑。",
        "from": "T29n1561_001:0325a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸惑斷故即證[卅/卅]。",
        "from": "T29n1561_001:0325a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名所為之利益。",
        "from": "T29n1561_001:0325a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七義者。",
        "from": "T29n1561_001:0325a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌言一切種冥滅。",
        "from": "T29n1561_001:0325a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知圓滿。",
        "from": "T29n1561_001:0325a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸滅是斷圓滿。",
        "from": "T29n1561_001:0325a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔眾生出生死泥者。",
        "from": "T29n1561_001:0325a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利他圓滿。",
        "from": "T29n1561_001:0325a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮如是者。",
        "from": "T29n1561_001:0325a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應供圓滿。",
        "from": "T29n1561_001:0325a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理師者。",
        "from": "T29n1561_001:0325a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便圓滿。",
        "from": "T29n1561_001:0325a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由佛世尊有勝方便說如理教利有情故。",
        "from": "T29n1561_001:0325a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論我者當說者。",
        "from": "T29n1561_001:0325a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "期心圓滿。",
        "from": "T29n1561_001:0325a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲造論故。",
        "from": "T29n1561_001:0325a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對法藏者。",
        "from": "T29n1561_001:0325a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立名圓滿。",
        "from": "T29n1561_001:0325a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惣攝七義。",
        "from": "T29n1561_001:0325a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T29n1561_001:0325a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智斷及利他　　方便期造論",
        "from": "T29n1561_001:0325a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　立名對法藏　　惣七義應知",
        "from": "T29n1561_001:0325a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色法．心法．心所有法．不相應法。",
        "from": "T29n1561_001:0325b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無為法。",
        "from": "T29n1561_001:0325b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此五法所知境中。",
        "from": "T29n1561_001:0325b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世皆不了。",
        "from": "T29n1561_001:0325b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛獨悟。",
        "from": "T29n1561_001:0325b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永斷諸惑故。",
        "from": "T29n1561_001:0325b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極遠時者。",
        "from": "T29n1561_001:0325b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂過去未來三阿僧祇劫外聲聞獨覺不能知。",
        "from": "T29n1561_001:0325b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以得知。",
        "from": "T29n1561_001:0325b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如昔有一人。",
        "from": "T29n1561_001:0325b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於舍利子邊求出家。",
        "from": "T29n1561_001:0325b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時舍利子觀二阿僧祇劫。",
        "from": "T29n1561_001:0325b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人無出家善根。",
        "from": "T29n1561_001:0325b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂不許。",
        "from": "T29n1561_001:0325b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人詣佛以求出家。",
        "from": "T29n1561_001:0325b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊觀之。",
        "from": "T29n1561_001:0325b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出僧祇外此人有少善根。",
        "from": "T29n1561_001:0325b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂許出家。",
        "from": "T29n1561_001:0325b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說偈言。",
        "from": "T29n1561_001:0325b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼人解脫種　　我觀極微細",
        "from": "T29n1561_001:0325b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　猶如諸礦中　　真金隱茲住",
        "from": "T29n1561_001:0325b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目連觀其母。",
        "from": "T29n1561_001:0325b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知生處。",
        "from": "T29n1561_001:0325b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往問佛。",
        "from": "T29n1561_001:0325b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告。",
        "from": "T29n1561_001:0325b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝母生在摩利支世界三千界外。",
        "from": "T29n1561_001:0325b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是多種分別中。",
        "from": "T29n1561_001:0325b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞等智皆不了達。",
        "from": "T29n1561_001:0325b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修福及智所得果。",
        "from": "T29n1561_001:0325b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為利他非自利。",
        "from": "T29n1561_001:0325b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶月光淨照十方。",
        "from": "T29n1561_001:0325b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊悲願亦如是。",
        "from": "T29n1561_001:0325b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又頌云。",
        "from": "T29n1561_001:0325b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　迴施之福及利己　　自修迴施二福德　復因利樂諸有情　　如上眾多福智聚　果證非他遂自得　　行願福及迴施福　自他俱利不唐捐如是雖說自利從因及果亦能利他人。",
        "from": "T29n1561_001:0325b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有頌言。",
        "from": "T29n1561_001:0325b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　乳母甘饍用資身　　為子獲安非為己　佛修福智趣菩提　　本為利生非為自頌云。",
        "from": "T29n1561_001:0325b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　時雨雖普降　　無種芽不生",
        "from": "T29n1561_001:0325b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　佛雖化世間　　緣闕不得果",
        "from": "T29n1561_001:0325b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又頌。",
        "from": "T29n1561_001:0325b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善知識者誰　　謂佛令生智",
        "from": "T29n1561_001:0325b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　離放逸惡行　　違此即捨離",
        "from": "T29n1561_001:0325b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對法宜如生得惠與聞惠為因。",
        "from": "T29n1561_001:0325c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞惠與思為因。",
        "from": "T29n1561_001:0325c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惠與修惠為因。",
        "from": "T29n1561_001:0325c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修惠與漏惠為因。",
        "from": "T29n1561_001:0325c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漏惠與涅槃為因。",
        "from": "T29n1561_001:0325c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此義故得名對法。",
        "from": "T29n1561_001:0325c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以能增長聞等惠故。",
        "from": "T29n1561_001:0325c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或諸有為悉皆棄捨。",
        "from": "T29n1561_001:0325c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯樂涅槃故名殊勝。",
        "from": "T29n1561_001:0325c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦集道諦為涅槃惠。",
        "from": "T29n1561_001:0325c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛教依法不依人。",
        "from": "T29n1561_001:0325c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰。",
        "from": "T29n1561_001:0325c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若離擇法定無餘　　能滅諸惑勝方便　由惑世間漂有海　　因此德佛說對法論曰。",
        "from": "T29n1561_001:0325c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離擇法無勝方便能滅諸惑。",
        "from": "T29n1561_001:0325c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T29n1561_001:0325c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我在依於我。",
        "from": "T29n1561_001:0325c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我滅度無別所依。",
        "from": "T29n1561_001:0325c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應依杖經。",
        "from": "T29n1561_001:0325c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令忘失。",
        "from": "T29n1561_001:0325c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛云。",
        "from": "T29n1561_001:0325c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老耄出家持吾三藏。",
        "from": "T29n1561_001:0325c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚為難得。",
        "from": "T29n1561_001:0325c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏一經二律三雜藏。",
        "from": "T29n1561_001:0325c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔迦葉佛時有一苾芻。",
        "from": "T29n1561_001:0325c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聰明博學具閑三藏。",
        "from": "T29n1561_001:0325c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞以語業毀罵出家在家人等。",
        "from": "T29n1561_001:0325c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為鵄鵂魚狗諸禽獸等。",
        "from": "T29n1561_001:0325c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後。",
        "from": "T29n1561_001:0325c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承此業報。",
        "from": "T29n1561_001:0325c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生於海中。",
        "from": "T29n1561_001:0325c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大魚身。",
        "from": "T29n1561_001:0325c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其形甚大。",
        "from": "T29n1561_001:0325c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十八頭具受眾苦。",
        "from": "T29n1561_001:0325c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊出世猶未得脫。",
        "from": "T29n1561_001:0325c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後有漁人。",
        "from": "T29n1561_001:0325c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其數一千。",
        "from": "T29n1561_001:0325c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "困捕魚次。",
        "from": "T29n1561_001:0325c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "網著此魚。",
        "from": "T29n1561_001:0325c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曳之不出。",
        "from": "T29n1561_001:0325c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後數千人同共曳出。",
        "from": "T29n1561_001:0325c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見其異類多頭形貌可怖。",
        "from": "T29n1561_001:0325c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊觀見知具報終。",
        "from": "T29n1561_001:0325c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂將大眾至彼海岸敷座。",
        "from": "T29n1561_001:0325c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐已呼彼魚云。",
        "from": "T29n1561_001:0325c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏。",
        "from": "T29n1561_001:0325c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝豈不是過去佛時三藏苾芻。",
        "from": "T29n1561_001:0325c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼魚聞已涕淚盈目。",
        "from": "T29n1561_001:0325c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊為說宿因。",
        "from": "T29n1561_001:0325c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其魚生悔更不飲噉。",
        "from": "T29n1561_001:0325c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因茲命終生於天上。",
        "from": "T29n1561_001:0325c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼時中聞法之眾各於自乘獲大法利。",
        "from": "T29n1561_001:0325c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五蘊不能攝一切法。",
        "from": "T29n1561_001:0325c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故不依五蘊而說先有染後要其淨。",
        "from": "T29n1561_001:0325c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨彼染故以先說有漏之法後說無漏。",
        "from": "T29n1561_001:0325c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無為頌。",
        "from": "T29n1561_001:0325c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　苾芻意寂靜　　於事得永斷",
        "from": "T29n1561_001:0325c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能盡生死際　　更不受後有",
        "from": "T29n1561_001:0326a01_0",
        "context_with_next_sentence": false
    }
]