[
    {
        "source_sentence": "無異禪師廣錄卷第十三之十五",
        "from": "X72n1435_013:0293a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住博山法孫　弘瀚　彚編",
        "from": "X72n1435_013:0293a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首座法孫　弘裕　同集",
        "from": "X72n1435_013:0293a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參禪警語上中下",
        "from": "X72n1435_013:0293a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卍云。",
        "from": "X72n1435_013:0293a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與第二編。",
        "from": "X72n1435_013:0293a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十七套第五冊所收禪警語同。",
        "from": "X72n1435_013:0293a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今省之。",
        "from": "X72n1435_013:0293a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開示偈一",
        "from": "X72n1435_013:0293a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示無踰禪人參念佛是誰(有序)",
        "from": "X72n1435_013:0293a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無踰禪者。",
        "from": "X72n1435_013:0293a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領雲棲師翁念佛公案。",
        "from": "X72n1435_013:0293a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雙徑峰頭。",
        "from": "X72n1435_013:0293a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目視雲漢有年矣。",
        "from": "X72n1435_013:0293a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而誰字尚未及破。",
        "from": "X72n1435_013:0293a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謁余乞偈。",
        "from": "X72n1435_013:0293a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "助其發機。",
        "from": "X72n1435_013:0293a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余不辭蕪陋。",
        "from": "X72n1435_013:0293a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偈記之。",
        "from": "X72n1435_013:0293a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲棲師翁。",
        "from": "X72n1435_013:0293a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨土宗旨。",
        "from": "X72n1435_013:0293a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙解重圍。",
        "from": "X72n1435_013:0293a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢幻生死。",
        "from": "X72n1435_013:0293a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛者誰。",
        "from": "X72n1435_013:0293a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛劄深追。",
        "from": "X72n1435_013:0293a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高懸祖印。",
        "from": "X72n1435_013:0293a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順機適時。",
        "from": "X72n1435_013:0293a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰字不明。",
        "from": "X72n1435_013:0293a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑情忿勇。",
        "from": "X72n1435_013:0293a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力竭氣絕。",
        "from": "X72n1435_013:0293a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始破漆桶。",
        "from": "X72n1435_013:0293a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漆桶既破。",
        "from": "X72n1435_013:0293a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毋容怠惰。",
        "from": "X72n1435_013:0293a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脚步擬緩。",
        "from": "X72n1435_013:0293a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非福即禍。",
        "from": "X72n1435_013:0293a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬仞懸崖。",
        "from": "X72n1435_013:0293a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只須親到。",
        "from": "X72n1435_013:0293a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石幔雲幢。",
        "from": "X72n1435_013:0293a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風清月皎。",
        "from": "X72n1435_013:0293a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清皎眼開。",
        "from": "X72n1435_013:0293a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當面活埋。",
        "from": "X72n1435_013:0293a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轟天裂地。",
        "from": "X72n1435_013:0293a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其聲如雷。",
        "from": "X72n1435_013:0293a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示水齋道遵參沒蹤跡",
        "from": "X72n1435_013:0293a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "船子廿餘年。",
        "from": "X72n1435_013:0293a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏身無蹤跡。",
        "from": "X72n1435_013:0293a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一棹入華亭。",
        "from": "X72n1435_013:0293a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩岸花狼藉。",
        "from": "X72n1435_013:0293a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今人但逐句。",
        "from": "X72n1435_013:0293b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熟讀竟何益。",
        "from": "X72n1435_013:0293b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水齋志於禪。",
        "from": "X72n1435_013:0293b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦行非所適。",
        "from": "X72n1435_013:0293b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專提句話頭。",
        "from": "X72n1435_013:0293b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅硬逾金石。",
        "from": "X72n1435_013:0293b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑情成片去。",
        "from": "X72n1435_013:0293b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只教一縫坼。",
        "from": "X72n1435_013:0293b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠不在天涯。",
        "from": "X72n1435_013:0293b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近非是咫尺。",
        "from": "X72n1435_013:0293b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吸乾滄海浪。",
        "from": "X72n1435_013:0293b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長空淨如碧。",
        "from": "X72n1435_013:0293b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擊碎珊瑚枝。",
        "from": "X72n1435_013:0293b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵語從唐譯。",
        "from": "X72n1435_013:0293b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不親釋迦文。",
        "from": "X72n1435_013:0293b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勘破維摩詰。",
        "from": "X72n1435_013:0293b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "街坊等箇人。",
        "from": "X72n1435_013:0293b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相將飲瓊液。",
        "from": "X72n1435_013:0293b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示觀恒禪人看普字",
        "from": "X72n1435_013:0293b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲從龍風從虎。",
        "from": "X72n1435_013:0293b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千里遠行跨步武。",
        "from": "X72n1435_013:0293b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不辭涉水與登山。",
        "from": "X72n1435_013:0293b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矢心迸破雲門普。",
        "from": "X72n1435_013:0293b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲門普字古今傳。",
        "from": "X72n1435_013:0293b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剔起眉毛反覆看。",
        "from": "X72n1435_013:0293b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本命元辰著落處。",
        "from": "X72n1435_013:0293b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣袋皮囊見不難。",
        "from": "X72n1435_013:0293b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皮囊包裹真消息。",
        "from": "X72n1435_013:0293b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現成不費些兒力。",
        "from": "X72n1435_013:0293b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔生擬議隔天涯。",
        "from": "X72n1435_013:0293b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肯向禪門空白日。",
        "from": "X72n1435_013:0293b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只須竪起鐵脊梁。",
        "from": "X72n1435_013:0293b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直下明明達本鄉。",
        "from": "X72n1435_013:0293b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故園田地都拋却。",
        "from": "X72n1435_013:0293b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始信男兒當自強。",
        "from": "X72n1435_013:0293b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示如是禪人參無字",
        "from": "X72n1435_013:0293b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趙州無古今有。",
        "from": "X72n1435_013:0293b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伶俐衲僧顛倒走。",
        "from": "X72n1435_013:0293b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於二處見根源。",
        "from": "X72n1435_013:0293b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大似面南看北斗。",
        "from": "X72n1435_013:0293b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破無字兩重關。",
        "from": "X72n1435_013:0293b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重步高登萬仞山。",
        "from": "X72n1435_013:0293b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱饒絕頂橫身過。",
        "from": "X72n1435_013:0293b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吸霧披雲未可閒。",
        "from": "X72n1435_013:0293b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "筆直路行將去。",
        "from": "X72n1435_013:0293b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰管途中住不住。",
        "from": "X72n1435_013:0293b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只教倒跨紫金毛。",
        "from": "X72n1435_013:0293b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反側始能張露布。",
        "from": "X72n1435_013:0293b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海底塵山頭浪。",
        "from": "X72n1435_013:0293b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奧語玄機都不向。",
        "from": "X72n1435_013:0293b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月皎風清夜靜時。",
        "from": "X72n1435_013:0293b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沾著纖毫成漭蕩。",
        "from": "X72n1435_013:0293b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反覆看不較多。",
        "from": "X72n1435_013:0293b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泥牛解吼木人歌。",
        "from": "X72n1435_013:0293b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "油瓶丟向籃筐裏。",
        "from": "X72n1435_013:0293b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "笑殺當年凌行婆。",
        "from": "X72n1435_013:0293b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示懷照禪人參沒蹤跡",
        "from": "X72n1435_013:0293b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句話頭如鐵橛。",
        "from": "X72n1435_013:0293b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雄心莫教根基劣。",
        "from": "X72n1435_013:0293b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太阿橫按絕周遮。",
        "from": "X72n1435_013:0293b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眉睫交橫流汗血。",
        "from": "X72n1435_013:0293b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密究深栽絕動搖。",
        "from": "X72n1435_013:0293b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臥薪嘗膽莫辭勞。",
        "from": "X72n1435_013:0293b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鍼錐劄入偷心死。",
        "from": "X72n1435_013:0293b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奪得如來向上標。",
        "from": "X72n1435_013:0293b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏身之處沒蹤跡。",
        "from": "X72n1435_013:0293b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醉舞狂歌人不識。",
        "from": "X72n1435_013:0293c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷臂安心誑小兒。",
        "from": "X72n1435_013:0293c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雪庭那得真消息。",
        "from": "X72n1435_013:0293c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒蹤跡處莫藏身。",
        "from": "X72n1435_013:0293c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吸盡澄江躍浪鱗。",
        "from": "X72n1435_013:0293c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紅爛身遊荊棘裏。",
        "from": "X72n1435_013:0293c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不尋歸去可憐生。",
        "from": "X72n1435_013:0293c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一喝耳聾稱大悟。",
        "from": "X72n1435_013:0293c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何如返擲解回互。",
        "from": "X72n1435_013:0293c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利八萬四千顆。",
        "from": "X72n1435_013:0293c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何曾夢見娘生褲。",
        "from": "X72n1435_013:0293c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香象截流彼岸登。",
        "from": "X72n1435_013:0293c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦陵破卵即飛騰。",
        "from": "X72n1435_013:0293c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衲僧果具通天眼。",
        "from": "X72n1435_013:0293c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抹過峯頭第幾層。",
        "from": "X72n1435_013:0293c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入理慎防休太早。",
        "from": "X72n1435_013:0293c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狸奴不厭叢林飽。",
        "from": "X72n1435_013:0293c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若于動處便旋機。",
        "from": "X72n1435_013:0293c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依舊全身入荒草。",
        "from": "X72n1435_013:0293c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直下縱橫六不收。",
        "from": "X72n1435_013:0293c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江水無心競夜流。",
        "from": "X72n1435_013:0293c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更問祖師端的旨。",
        "from": "X72n1435_013:0293c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淡雲輕日正清秋。",
        "from": "X72n1435_013:0293c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示麓屏禪人省親并參無字",
        "from": "X72n1435_013:0293c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一箇無字。",
        "from": "X72n1435_013:0293c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倚天長劒。",
        "from": "X72n1435_013:0293c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞥爾情生。",
        "from": "X72n1435_013:0293c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "搖空閃電。",
        "from": "X72n1435_013:0293c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三千里外直如弦。",
        "from": "X72n1435_013:0293c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只教覿見親爺面。",
        "from": "X72n1435_013:0293c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見後如何。",
        "from": "X72n1435_013:0293c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切忌道著。",
        "from": "X72n1435_013:0293c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示參父母未生前",
        "from": "X72n1435_013:0293c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母未生前面目。",
        "from": "X72n1435_013:0293c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已生之後又如何。",
        "from": "X72n1435_013:0293c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一朝蹋著來時路。",
        "from": "X72n1435_013:0293c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨具雲衣事更多。",
        "from": "X72n1435_013:0293c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示清隱禪人九帶語",
        "from": "X72n1435_013:0293c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮山九帶。",
        "from": "X72n1435_013:0293c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "償眾生債。",
        "from": "X72n1435_013:0293c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爛翻舌頭。",
        "from": "X72n1435_013:0293c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生頗柰。",
        "from": "X72n1435_013:0293c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入佛法藏。",
        "from": "X72n1435_013:0293c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揭露家私。",
        "from": "X72n1435_013:0293c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事貫理貫。",
        "from": "X72n1435_013:0293c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和贓捉敗。",
        "from": "X72n1435_013:0293c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛正法眼。",
        "from": "X72n1435_013:0293c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真不掩偽。",
        "from": "X72n1435_013:0293c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玅叶兼通。",
        "from": "X72n1435_013:0293c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順風逆載。",
        "from": "X72n1435_013:0293c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事理縱橫。",
        "from": "X72n1435_013:0293c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明暗互融。",
        "from": "X72n1435_013:0293c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈曲垂慈。",
        "from": "X72n1435_013:0293c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機感自在。",
        "from": "X72n1435_013:0293c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金針雙鎻。",
        "from": "X72n1435_013:0293c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當面活埋。",
        "from": "X72n1435_013:0293c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平懷常實。",
        "from": "X72n1435_013:0293c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貴買賤賣。",
        "from": "X72n1435_013:0293c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有一帶。",
        "from": "X72n1435_013:0293c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同條死同條生。",
        "from": "X72n1435_013:0293c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勘破此帶。",
        "from": "X72n1435_013:0293c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有利有害。",
        "from": "X72n1435_013:0293c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清隱禪人請說破。",
        "from": "X72n1435_013:0293c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輸我當行好買賣。",
        "from": "X72n1435_013:0293c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰。",
        "from": "X72n1435_013:0293c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句話頭如鐵橛。",
        "from": "X72n1435_013:0293c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浮山九帶沒來由。",
        "from": "X72n1435_013:0293c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知塞却通天竅。",
        "from": "X72n1435_013:0293c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "突出娘生箇指頭。",
        "from": "X72n1435_013:0293c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示林埜禪人參沒蹤跡",
        "from": "X72n1435_013:0294a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒蹤跡莫藏身。",
        "from": "X72n1435_013:0294a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釣盡華亭躍浪鱗。",
        "from": "X72n1435_013:0294a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏身處沒蹤跡。",
        "from": "X72n1435_013:0294a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三歲獅兒解返擲。",
        "from": "X72n1435_013:0294a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緊把繩頭勇力參。",
        "from": "X72n1435_013:0294a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太虗紾出黃金汁。",
        "from": "X72n1435_013:0294a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男兒漢須性燥。",
        "from": "X72n1435_013:0294a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捩轉鼻頭何處討。",
        "from": "X72n1435_013:0294a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好於痛處下鍼錐。",
        "from": "X72n1435_013:0294a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只待冷灰看豆爆。",
        "from": "X72n1435_013:0294a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不破疑團誓不休。",
        "from": "X72n1435_013:0294a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放出溈山水牯牛。",
        "from": "X72n1435_013:0294a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五字到今諱不得。",
        "from": "X72n1435_013:0294a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戴角披毛者一頭。",
        "from": "X72n1435_013:0294a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親磕著得便宜。",
        "from": "X72n1435_013:0294a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢問。",
        "from": "X72n1435_013:0294a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皮囊知不知。",
        "from": "X72n1435_013:0294a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倒吹鐵笛音聲別。",
        "from": "X72n1435_013:0294a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正是塵勞解脫時。",
        "from": "X72n1435_013:0294a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示可上禪座",
        "from": "X72n1435_013:0294a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句話頭如鐵橛。",
        "from": "X72n1435_013:0294a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從前活計湯澆雪。",
        "from": "X72n1435_013:0294a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如抒海討明珠。",
        "from": "X72n1435_013:0294a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇心直教滄溟竭。",
        "from": "X72n1435_013:0294a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得明珠誓不休。",
        "from": "X72n1435_013:0294a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到手方纔得自繇。",
        "from": "X72n1435_013:0294a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通身汗下清風起。",
        "from": "X72n1435_013:0294a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白浪滔天迸出頭。",
        "from": "X72n1435_013:0294a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "險道先須辯通塞。",
        "from": "X72n1435_013:0294a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要以前人為軌則。",
        "from": "X72n1435_013:0294a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長慶蒲團船子橈用處。",
        "from": "X72n1435_013:0294a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謾將心意測。",
        "from": "X72n1435_013:0294a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "管他烈火與寒氷斷臂焚身似不曾。",
        "from": "X72n1435_013:0294a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若箇皮囊真寶聚。",
        "from": "X72n1435_013:0294a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好將清操續傳燈。",
        "from": "X72n1435_013:0294a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示慈門禪人",
        "from": "X72n1435_013:0294a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句話頭如鐵橛。",
        "from": "X72n1435_013:0294a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眉毛不與眼相參。",
        "from": "X72n1435_013:0294a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究心自古無多事。",
        "from": "X72n1435_013:0294a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劈破疑團是指南。",
        "from": "X72n1435_013:0294a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑團破處無涯岸。",
        "from": "X72n1435_013:0294a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "突出衣珠光燦爛。",
        "from": "X72n1435_013:0294a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從他八萬四千門。",
        "from": "X72n1435_013:0294a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門門撞著是者漢。",
        "from": "X72n1435_013:0294a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨濟當年赤肉團。",
        "from": "X72n1435_013:0294a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至今鮮血尚漫漫。",
        "from": "X72n1435_013:0294a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真人裹向袈裟裏。",
        "from": "X72n1435_013:0294a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼓掌難教覿面看。",
        "from": "X72n1435_013:0294a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只須揣出虗空骨。",
        "from": "X72n1435_013:0294a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹底無依休恍忽。",
        "from": "X72n1435_013:0294a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順流筆直到江西。",
        "from": "X72n1435_013:0294a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "匡廬深處蛟鼉窟。",
        "from": "X72n1435_013:0294a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五老峯前翠作堆。",
        "from": "X72n1435_013:0294a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫風幾變尚崔嵬。",
        "from": "X72n1435_013:0294a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江濤響入遊人耳。",
        "from": "X72n1435_013:0294a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫錯呼為脚底雷。",
        "from": "X72n1435_013:0294a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示恒見禪人",
        "from": "X72n1435_013:0294a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句話頭如鐵橛。",
        "from": "X72n1435_013:0294b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千年故紙不須鑽。",
        "from": "X72n1435_013:0294b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德山不入魔軍隊。",
        "from": "X72n1435_013:0294b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地眾生被眼瞞。",
        "from": "X72n1435_013:0294b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫道宗門路勁挺。",
        "from": "X72n1435_013:0294b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大丈夫兒須自省。",
        "from": "X72n1435_013:0294b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二祖雪庭斷臂時。",
        "from": "X72n1435_013:0294b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震旦何人不引領。",
        "from": "X72n1435_013:0294b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只須坐斷葛藤窠。",
        "from": "X72n1435_013:0294b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法塵勞柰爾何。",
        "from": "X72n1435_013:0294b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點心不向言前薦。",
        "from": "X72n1435_013:0294b04_10",
        "context_with_next_sentence": true
    },
    {
