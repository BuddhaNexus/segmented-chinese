[
    {
        "source_sentence": "佛說要行捨身經",
        "from": "T85n2895_001:1414c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T85n2895_001:1414c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在□□□□□□大苾芻眾千二百五□□□□□漢大迦葉波而為□□□□一千人俱。",
        "from": "T85n2895_001:1414c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛騰辟支而為上首。",
        "from": "T85n2895_001:1414c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩八千人俱。",
        "from": "T85n2895_001:1414c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地藏菩薩而為上首。",
        "from": "T85n2895_001:1414c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵天王釋提桓因四天大王龍神八部。",
        "from": "T85n2895_001:1414c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸苾芻苾芻尼烏波索迦烏波斯加。",
        "from": "T85n2895_001:1414c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊於此眾中欣然而矣。",
        "from": "T85n2895_001:1415a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明照屍陀林及此大會。",
        "from": "T85n2895_001:1415a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未久之間其光還復從口而入。",
        "from": "T85n2895_001:1415a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端身而坐。",
        "from": "T85n2895_001:1415a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念不動。",
        "from": "T85n2895_001:1415a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時迦葉波即從座起。",
        "from": "T85n2895_001:1415a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏露右肩。",
        "from": "T85n2895_001:1415a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶三匝。",
        "from": "T85n2895_001:1415a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於佛前右膝著地。",
        "from": "T85n2895_001:1415a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言。",
        "from": "T85n2895_001:1415a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T85n2895_001:1415a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來何故於此眾中欣然而笑。",
        "from": "T85n2895_001:1415a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明照屍陀林及此大會。",
        "from": "T85n2895_001:1415a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未久之間其光還復從口而入。",
        "from": "T85n2895_001:1415a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端身而座。",
        "from": "T85n2895_001:1415a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念不動。",
        "from": "T85n2895_001:1415a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來說其意志。",
        "from": "T85n2895_001:1415a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2895_001:1415a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉。",
        "from": "T85n2895_001:1415a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2895_001:1415a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當諦聽善思念之。",
        "from": "T85n2895_001:1415a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當為汝說其要法。",
        "from": "T85n2895_001:1415a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以佛眼觀此林中。",
        "from": "T85n2895_001:1415a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身行者未來當獲正等菩提。",
        "from": "T85n2895_001:1415a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情能發勝上捨身之意。",
        "from": "T85n2895_001:1415a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心生平等無有愛憎。",
        "from": "T85n2895_001:1415a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生慳悋。",
        "from": "T85n2895_001:1415a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能一發是心。",
        "from": "T85n2895_001:1415a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖未捨身是人已過二乘之行百千萬倍。",
        "from": "T85n2895_001:1415a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即共諸菩薩等一切同志。",
        "from": "T85n2895_001:1415a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況捨身命普及有情。",
        "from": "T85n2895_001:1415a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是功德。",
        "from": "T85n2895_001:1415a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若具說不可窮盡。",
        "from": "T85n2895_001:1415a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉波白佛言。",
        "from": "T85n2895_001:1415a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來所言在屍陀林普及一切有情。",
        "from": "T85n2895_001:1415a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是義不然不名為普。",
        "from": "T85n2895_001:1415a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是普者水性有情即無有分。",
        "from": "T85n2895_001:1415a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來示我普義。",
        "from": "T85n2895_001:1415a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2895_001:1415a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2895_001:1415a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我正許說汝方即問。",
        "from": "T85n2895_001:1415a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情能施身分。",
        "from": "T85n2895_001:1415a19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分為二分。",
        "from": "T85n2895_001:1415a19_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一分水中。",
        "from": "T85n2895_001:1415a20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一分陸地。",
        "from": "T85n2895_001:1415a20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人命欲終時。",
        "from": "T85n2895_001:1415a20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囑善知識同志願者。",
        "from": "T85n2895_001:1415a20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分割其身以為二分。",
        "from": "T85n2895_001:1415a21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是分身者所得功德。",
        "from": "T85n2895_001:1415a21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與捨身人功德無二。",
        "from": "T85n2895_001:1415a22_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念過去燃燈佛時。",
        "from": "T85n2895_001:1415a22_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在舍衛國修菩提行。",
        "from": "T85n2895_001:1415a23_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願捨身命皮肉筋骨。",
        "from": "T85n2895_001:1415a23_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心相續。",
        "from": "T85n2895_001:1415a24_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒于時為我善友。",
        "from": "T85n2895_001:1415a24_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我命既盡即分二分。",
        "from": "T85n2895_001:1415a24_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置如法。",
        "from": "T85n2895_001:1415a25_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏合掌即發願言。",
        "from": "T85n2895_001:1415a25_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此微供普及有情水陸空行一切都食緣。",
        "from": "T85n2895_001:1415a26_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是功德無始已來恒相值遇共為眷屬。",
        "from": "T85n2895_001:1415a27_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復作佛即其人也。",
        "from": "T85n2895_001:1415a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我因捨身發大誓言。",
        "from": "T85n2895_001:1415a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情飢食我肉。",
        "from": "T85n2895_001:1415a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴飲我血。",
        "from": "T85n2895_001:1415a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既飲噉已。",
        "from": "T85n2895_001:1415a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願令一切有情因食我肉發菩提心離飢渴苦。",
        "from": "T85n2895_001:1415a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來當得法喜等食。",
        "from": "T85n2895_001:1415b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資自性身。",
        "from": "T85n2895_001:1415b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲我血者離諸愛渴。",
        "from": "T85n2895_001:1415b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲法水灌注心源。",
        "from": "T85n2895_001:1415b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛法王資變化身。",
        "from": "T85n2895_001:1415b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是義故疾得無上正等菩提。",
        "from": "T85n2895_001:1415b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又迦葉波我於因地初發心時。",
        "from": "T85n2895_001:1415b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三度死捨正第四生。",
        "from": "T85n2895_001:1415b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能生捨不貪愛。",
        "from": "T85n2895_001:1415b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於空王佛時。",
        "from": "T85n2895_001:1415b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以悟空理即薩埵王子。",
        "from": "T85n2895_001:1415b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施身餓虎飼於七子。",
        "from": "T85n2895_001:1415b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦作月光大王。",
        "from": "T85n2895_001:1415b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣惠千首。",
        "from": "T85n2895_001:1415b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為達拏太子。",
        "from": "T85n2895_001:1415b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施妻子。",
        "from": "T85n2895_001:1415b08_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為慈力悲王施軀於五夜叉。",
        "from": "T85n2895_001:1415b08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求法故。",
        "from": "T85n2895_001:1415b09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於雪山邊求半句偈。",
        "from": "T85n2895_001:1415b09_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以施其身餧其羅剎。",
        "from": "T85n2895_001:1415b10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若廣說無始已來生。",
        "from": "T85n2895_001:1415b10_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身命於百千劫不可說盡。",
        "from": "T85n2895_001:1415b11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T85n2895_001:1415b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都由因地初發心時死捨身故。",
        "from": "T85n2895_001:1415b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉放白佛言。",
        "from": "T85n2895_001:1415b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如是等人但行捨身功德無量。",
        "from": "T85n2895_001:1415b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不審未施已前多生造罪。",
        "from": "T85n2895_001:1415b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先世惡業捨身福報得滅以不。",
        "from": "T85n2895_001:1415b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2895_001:1415b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2895_001:1415b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情多生殺害一切有情。",
        "from": "T85n2895_001:1415b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍娑婆界。",
        "from": "T85n2895_001:1415b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四重五逆謗方等經。",
        "from": "T85n2895_001:1415b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至食噉有情血肉。",
        "from": "T85n2895_001:1415b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等罪無量無邊。",
        "from": "T85n2895_001:1415b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情能施身分普濟有情。",
        "from": "T85n2895_001:1415b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除飢渴苦。",
        "from": "T85n2895_001:1415b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上之罪悉皆消滅。",
        "from": "T85n2895_001:1415b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始已來所有殃咎速滅無餘緣。",
        "from": "T85n2895_001:1415b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身故即是大懺悔悉誠慚愧。",
        "from": "T85n2895_001:1415b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方一切諸佛皆共稱嘆。",
        "from": "T85n2895_001:1415b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T85n2895_001:1415b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人從無始已來作業。",
        "from": "T85n2895_001:1415b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偷僧祇物常住僧物見前僧物不淨說法。",
        "from": "T85n2895_001:1415b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大斗重秤如是等罪。",
        "from": "T85n2895_001:1415b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應入奈落迦傍生餓鬼。",
        "from": "T85n2895_001:1415b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千劫中不得解脫。",
        "from": "T85n2895_001:1415b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐獲來苦即請召集。",
        "from": "T85n2895_001:1415b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娑訶世界三明六通具八解脫大阿羅漢。",
        "from": "T85n2895_001:1415b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若凡若聖一切僧尼聚在一處。",
        "from": "T85n2895_001:1415b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲滅其罪亦不可滅。",
        "from": "T85n2895_001:1415b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以即有百千殑伽娑訶世界。",
        "from": "T85n2895_001:1415b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾僧清淨眾海即不來集。",
        "from": "T85n2895_001:1415b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣罪難除滅。",
        "from": "T85n2895_001:1415b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故稱云常住僧物。",
        "from": "T85n2895_001:1415b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普通法界上至諸佛下至沙彌。",
        "from": "T85n2895_001:1415b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆有分不如有人。",
        "from": "T85n2895_001:1415c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切生處。",
        "from": "T85n2895_001:1415c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願捨此身皮肉筋骨。",
        "from": "T85n2895_001:1415c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心心相續如上之罪。",
        "from": "T85n2895_001:1415c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆消滅。",
        "from": "T85n2895_001:1415c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天曹地府所有薄籍自然除滅。",
        "from": "T85n2895_001:1415c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣。",
        "from": "T85n2895_001:1415c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見是利故。",
        "from": "T85n2895_001:1415c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸諸有情當施身分必定獲得無上等覺。",
        "from": "T85n2895_001:1415c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告彌勒菩薩言。",
        "from": "T85n2895_001:1415c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏如是輩經。",
        "from": "T85n2895_001:1415c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等護持。",
        "from": "T85n2895_001:1415c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於贍部洲廣宣流布無令斷絕。",
        "from": "T85n2895_001:1415c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彌勒菩薩白佛言。",
        "from": "T85n2895_001:1415c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T85n2895_001:1415c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來滅後惡世之中。",
        "from": "T85n2895_001:1415c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T85n2895_001:1415c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發勇猛心。",
        "from": "T85n2895_001:1415c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以身布施。",
        "from": "T85n2895_001:1415c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情為檀波羅蜜故。",
        "from": "T85n2895_001:1415c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等人我於龍花初首皆令得度。",
        "from": "T85n2895_001:1415c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願佛曰。",
        "from": "T85n2895_001:1415c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不有慮。",
        "from": "T85n2895_001:1415c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵天王釋提桓因四天大王。",
        "from": "T85n2895_001:1415c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍神八部諸苾芻苾芻尼烏波索迦烏波斯迦。",
        "from": "T85n2895_001:1415c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言。",
        "from": "T85n2895_001:1415c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T85n2895_001:1415c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此人輩。",
        "from": "T85n2895_001:1415c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等從今為作衛護。",
        "from": "T85n2895_001:1415c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令有人作於留難。",
        "from": "T85n2895_001:1415c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T85n2895_001:1415c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此人輩必定獲得無等正覺。",
        "from": "T85n2895_001:1415c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時慶喜白佛言。",
        "from": "T85n2895_001:1415c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊。",
        "from": "T85n2895_001:1415c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當何名之。",
        "from": "T85n2895_001:1415c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告慶喜。",
        "from": "T85n2895_001:1415c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經名諸佛要行捨身功德經。",
        "from": "T85n2895_001:1415c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時一切天人阿素洛聞佛所說。",
        "from": "T85n2895_001:1415c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受奉行。",
        "from": "T85n2895_001:1415c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說要行捨身經",
        "from": "T85n2895_001:1415c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身願文　十方三世一切諸佛當證知。",
        "from": "T85n2895_001:1415c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲等。",
        "from": "T85n2895_001:1415c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無始已來及以今生盡未來際。",
        "from": "T85n2895_001:1415c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒以內財外財生施死施。",
        "from": "T85n2895_001:1415c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子某甲今生既盡。",
        "from": "T85n2895_001:1415c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復分段之身。",
        "from": "T85n2895_001:1415c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "血肉皮骨頭目髓腦。",
        "from": "T85n2895_001:1415c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以手足施與一切飢餓眾生。",
        "from": "T85n2895_001:1415c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以償宿債。",
        "from": "T85n2895_001:1415c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰效菩薩苦行之蹤。",
        "from": "T85n2895_001:1415c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身血肉至屍陀林。",
        "from": "T85n2895_001:1415c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所捨身善根以集當集。",
        "from": "T85n2895_001:1415c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現集一切善根。",
        "from": "T85n2895_001:1415c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此善願共一切眾生生生之處。",
        "from": "T85n2895_001:1415c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於身命財不生貪著。",
        "from": "T85n2895_001:1415c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨邪歸正。",
        "from": "T85n2895_001:1415c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩提心。",
        "from": "T85n2895_001:1415c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永除三障。",
        "from": "T85n2895_001:1415c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離貧窮。",
        "from": "T85n2895_001:1415c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常見一切諸佛菩薩。",
        "from": "T85n2895_001:1415c29_18",
        "context_with_next_sentence": false
    }
]