[
    {
        "source_sentence": "御製總序",
        "from": "X68n1319_001:0523c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來正法眼藏。",
        "from": "X68n1319_001:0523c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教外別傳。",
        "from": "X68n1319_001:0523c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實有透三關之理。",
        "from": "X68n1319_001:0523c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真語者．是實語者．不妄語者．不誑語者。",
        "from": "X68n1319_001:0523c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有志於道之人。",
        "from": "X68n1319_001:0523c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則須勤參力究。",
        "from": "X68n1319_001:0523c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由一而三。",
        "from": "X68n1319_001:0523c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步步皆有著落。",
        "from": "X68n1319_001:0523c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非可顢頇函胡。",
        "from": "X68n1319_001:0523c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自欺欺人。",
        "from": "X68n1319_001:0523c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕既深明此事。",
        "from": "X68n1319_001:0523c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惜話墮。",
        "from": "X68n1319_001:0523c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐一指明。",
        "from": "X68n1319_001:0523c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　夫學人初登解脫之門。",
        "from": "X68n1319_001:0523c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乍釋業繫之苦。",
        "from": "X68n1319_001:0523c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺山河大地。",
        "from": "X68n1319_001:0523c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方虗空並皆消殞。",
        "from": "X68n1319_001:0523c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為從上古錐舌頭之所瞞。",
        "from": "X68n1319_001:0523c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識得現在七尺之軀不過地水火風。",
        "from": "X68n1319_001:0523c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然徹底清淨。",
        "from": "X68n1319_001:0523c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不挂一絲。",
        "from": "X68n1319_001:0523c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名為初步破參。",
        "from": "X68n1319_001:0523c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後際斷者。",
        "from": "X68n1319_001:0523c15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破本參後。",
        "from": "X68n1319_001:0523c15_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃知山者山。",
        "from": "X68n1319_001:0523c15_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河者河。",
        "from": "X68n1319_001:0523c16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地者大地。",
        "from": "X68n1319_001:0523c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方虗空者十方虗空。",
        "from": "X68n1319_001:0523c16_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地水火風者地水火屬。",
        "from": "X68n1319_001:0523c17_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至無明者無明。",
        "from": "X68n1319_001:0523c17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱者煩惱。",
        "from": "X68n1319_001:0523c17_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色聲香味觸法者色聲香味觸法。",
        "from": "X68n1319_001:0523c18_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡是本分。",
        "from": "X68n1319_001:0523c18_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是菩提。",
        "from": "X68n1319_001:0523c18_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一物非我身。",
        "from": "X68n1319_001:0523c19_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一物是我己。",
        "from": "X68n1319_001:0523c19_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境智融通。",
        "from": "X68n1319_001:0523c19_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色空無礙。",
        "from": "X68n1319_001:0523c19_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲大自在。",
        "from": "X68n1319_001:0523c20_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常住不動。",
        "from": "X68n1319_001:0523c20_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則名為透重關。",
        "from": "X68n1319_001:0523c20_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為大死大活者。",
        "from": "X68n1319_001:0523c20_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　透重關後。",
        "from": "X68n1319_001:0523c21_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家舍即在途中。",
        "from": "X68n1319_001:0523c21_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "途中不離家舍。",
        "from": "X68n1319_001:0523c21_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明頭也合。",
        "from": "X68n1319_001:0523c22_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暗頭也合。",
        "from": "X68n1319_001:0523c22_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂即是照。",
        "from": "X68n1319_001:0523c22_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照即是寂。",
        "from": "X68n1319_001:0523c22_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行斯住斯。",
        "from": "X68n1319_001:0523c22_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體斯用斯。",
        "from": "X68n1319_001:0523c23_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空斯有斯。",
        "from": "X68n1319_001:0523c23_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古斯今斯。",
        "from": "X68n1319_001:0523c23_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生故長生。",
        "from": "X68n1319_001:0523c23_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無滅故不滅。",
        "from": "X68n1319_001:0523c23_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯惺惺行履。",
        "from": "X68n1319_001:0523c24_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明執著自然消落。",
        "from": "X68n1319_001:0523c24_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方能踏末後一關。",
        "from": "X68n1319_001:0523c24_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖云透三關。",
        "from": "X68n1319_001:0524a01_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而實無透者。",
        "from": "X68n1319_001:0524a01_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不過如來如是。",
        "from": "X68n1319_001:0524a01_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦如是。",
        "from": "X68n1319_001:0524a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從茲方修無修。",
        "from": "X68n1319_001:0524a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證無證。",
        "from": "X68n1319_001:0524a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙覺普明。",
        "from": "X68n1319_001:0524a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓照法界。",
        "from": "X68n1319_001:0524a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為無量。",
        "from": "X68n1319_001:0524a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量為一。",
        "from": "X68n1319_001:0524a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中現小。",
        "from": "X68n1319_001:0524a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小中現大。",
        "from": "X68n1319_001:0524a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐微塵裏轉大法輪。",
        "from": "X68n1319_001:0524a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一毫端現寶王剎。",
        "from": "X68n1319_001:0524a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救拔眾生。",
        "from": "X68n1319_001:0524a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利用無盡。",
        "from": "X68n1319_001:0524a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛佛祖祖皆為此一大事因緣出現於世。",
        "from": "X68n1319_001:0524a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達摩西來。",
        "from": "X68n1319_001:0524a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷代授受。",
        "from": "X68n1319_001:0524a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古德傳燈。",
        "from": "X68n1319_001:0524a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡光中。",
        "from": "X68n1319_001:0524a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大圓鏡裏。",
        "from": "X68n1319_001:0524a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日往月來。",
        "from": "X68n1319_001:0524a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至於今。",
        "from": "X68n1319_001:0524a07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　雖然廣大法門。",
        "from": "X68n1319_001:0524a07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖凡並托。",
        "from": "X68n1319_001:0524a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴香海。",
        "from": "X68n1319_001:0524a07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "細鉅同歸。",
        "from": "X68n1319_001:0524a07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得骨得髓者固多。",
        "from": "X68n1319_001:0524a08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如麻如粟者何限。",
        "from": "X68n1319_001:0524a08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去聖遙遠。",
        "from": "X68n1319_001:0524a08_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔外益繁。",
        "from": "X68n1319_001:0524a09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不達佛心。",
        "from": "X68n1319_001:0524a09_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄參祖席。",
        "from": "X68n1319_001:0524a09_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金山泥封。",
        "from": "X68n1319_001:0524a09_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧日雲蔽。",
        "from": "X68n1319_001:0524a09_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約其訛謬。",
        "from": "X68n1319_001:0524a10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有三端。",
        "from": "X68n1319_001:0524a10_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其上者。",
        "from": "X68n1319_001:0524a10_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔見根塵互引。",
        "from": "X68n1319_001:0524a10_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界相生。",
        "from": "X68n1319_001:0524a10_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意識紛飛。",
        "from": "X68n1319_001:0524a11_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非幻妄。",
        "from": "X68n1319_001:0524a11_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頓生歡喜。",
        "from": "X68n1319_001:0524a11_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂是真常。",
        "from": "X68n1319_001:0524a11_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "休去歇去。",
        "from": "X68n1319_001:0524a11_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以空為空。",
        "from": "X68n1319_001:0524a12_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知性海無邊。",
        "from": "X68n1319_001:0524a12_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化城無住。",
        "from": "X68n1319_001:0524a12_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果能見性。",
        "from": "X68n1319_001:0524a12_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當下無心。",
        "from": "X68n1319_001:0524a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心既見空。",
        "from": "X68n1319_001:0524a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即未見性。",
        "from": "X68n1319_001:0524a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是形同槁木。",
        "from": "X68n1319_001:0524a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心等死灰。",
        "from": "X68n1319_001:0524a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬有到前。",
        "from": "X68n1319_001:0524a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一空不敵。",
        "from": "X68n1319_001:0524a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱能立亡坐脫。",
        "from": "X68n1319_001:0524a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍是業識精魂。",
        "from": "X68n1319_001:0524a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況乃固執斷見。",
        "from": "X68n1319_001:0524a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必至變作狂華。",
        "from": "X68n1319_001:0524a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂因果之皆空。",
        "from": "X68n1319_001:0524a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恣猖狂而不返。",
        "from": "X68n1319_001:0524a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非一妄在心。",
        "from": "X68n1319_001:0524a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒沙生滅。",
        "from": "X68n1319_001:0524a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能不造生死業。",
        "from": "X68n1319_001:0524a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷菩提根。",
        "from": "X68n1319_001:0524a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又其下者。",
        "from": "X68n1319_001:0524a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見得箇昭昭靈靈。",
        "from": "X68n1319_001:0524a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便謂是無位真人。",
        "from": "X68n1319_001:0524a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面門出入。",
        "from": "X68n1319_001:0524a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揚眉瞬目。",
        "from": "X68n1319_001:0524a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豎指擎拳。",
        "from": "X68n1319_001:0524a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作識神之活計。",
        "from": "X68n1319_001:0524a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張日下之孤燈。",
        "from": "X68n1319_001:0524a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶魚目為明珠。",
        "from": "X68n1319_001:0524a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覓栴檀於糞土。",
        "from": "X68n1319_001:0524a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "噙著鐵丸。",
        "from": "X68n1319_001:0524a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口稱玉液。",
        "from": "X68n1319_001:0524a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到得臘盡機除時。",
        "from": "X68n1319_001:0524a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方知依舊是箇茫茫無據。",
        "from": "X68n1319_001:0524a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又其下者。",
        "from": "X68n1319_001:0524a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從經教語錄中挂取葛藤。",
        "from": "X68n1319_001:0524a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從諸方舉揚處拾人涕唾。",
        "from": "X68n1319_001:0524a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發狂亂之知見。",
        "from": "X68n1319_001:0524a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翳於自心。",
        "from": "X68n1319_001:0524a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立幻化之色聲作為實法。",
        "from": "X68n1319_001:0524a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向真如境上鼓動心機。",
        "from": "X68n1319_001:0524a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無脫法中自生繫縛。",
        "from": "X68n1319_001:0524a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔形難揜。",
        "from": "X68n1319_001:0524a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遁歸圓相之中。",
        "from": "X68n1319_001:0524a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解路莫通。",
        "from": "X68n1319_001:0524a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躲向藤條之下。",
        "from": "X68n1319_001:0524b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情塵積滯。",
        "from": "X68n1319_001:0524b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識浪奔催。",
        "from": "X68n1319_001:0524b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞞己瞞人。",
        "from": "X68n1319_001:0524b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欺心欺佛。",
        "from": "X68n1319_001:0524b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全是為名為利。",
        "from": "X68n1319_001:0524b02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卻來說妙說元。",
        "from": "X68n1319_001:0524b02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盲驢牽盲驢。",
        "from": "X68n1319_001:0524b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沿磨盤而遶轉。",
        "from": "X68n1319_001:0524b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡夢證癡夢。",
        "from": "X68n1319_001:0524b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拈漆桶為瓣香。",
        "from": "X68n1319_001:0524b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則循覺路而撲火輪。",
        "from": "X68n1319_001:0524b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能不由善因而招惡果。",
        "from": "X68n1319_001:0524b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三者。",
        "from": "X68n1319_001:0524b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實繁有徒。",
        "from": "X68n1319_001:0524b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗旨不明。",
        "from": "X68n1319_001:0524b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈淪浩劫矣。",
        "from": "X68n1319_001:0524b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　朕膺元后父母之任。",
        "from": "X68n1319_001:0524b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並非開堂秉拂之人。",
        "from": "X68n1319_001:0524b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲期民物之安。",
        "from": "X68n1319_001:0524b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟循周孔之轍。",
        "from": "X68n1319_001:0524b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以御極以來。",
        "from": "X68n1319_001:0524b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十年未談禪宗。",
        "from": "X68n1319_001:0524b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但念人天慧命。",
        "from": "X68n1319_001:0524b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖別傳。",
        "from": "X68n1319_001:0524b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[拚-ㄙ+ㄊ]雙眉拖地以悟眾生。",
        "from": "X68n1319_001:0524b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留無上金丹以起枯朽。",
        "from": "X68n1319_001:0524b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈得任彼邪魔瞎其正眼。",
        "from": "X68n1319_001:0524b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼓諸塗毒。",
        "from": "X68n1319_001:0524b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅盡妙心。",
        "from": "X68n1319_001:0524b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕實有不得不言。",
        "from": "X68n1319_001:0524b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不忍不言者。",
        "from": "X68n1319_001:0524b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近於幾暇。",
        "from": "X68n1319_001:0524b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨味淄澠。",
        "from": "X68n1319_001:0524b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所如。",
        "from": "X68n1319_001:0524b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱從上古錐語錄中。",
        "from": "X68n1319_001:0524b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擇提持向上直指真宗者。",
        "from": "X68n1319_001:0524b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並擷其至言。",
        "from": "X68n1319_001:0524b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手為刪輯。",
        "from": "X68n1319_001:0524b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰僧肇．曰永嘉．曰寒山．曰拾得．曰溈山．曰仰山．曰趙州．曰永明．曰雲門．曰雪竇．曰圓悟．曰玉林。",
        "from": "X68n1319_001:0524b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二禪師。",
        "from": "X68n1319_001:0524b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏外之書。",
        "from": "X68n1319_001:0524b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰紫陽真人。",
        "from": "X68n1319_001:0524b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃不數月之功。",
        "from": "X68n1319_001:0524b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "編次成集者。",
        "from": "X68n1319_001:0524b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其他披覽未周。",
        "from": "X68n1319_001:0524b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即採掇未及。",
        "from": "X68n1319_001:0524b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非曰此外無可取也。",
        "from": "X68n1319_001:0524b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是數大善知識。",
        "from": "X68n1319_001:0524b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實皆窮微洞本。",
        "from": "X68n1319_001:0524b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究旨通宗。",
        "from": "X68n1319_001:0524b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深契摩詰不二之門。",
        "from": "X68n1319_001:0524b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曹溪一味之旨。",
        "from": "X68n1319_001:0524b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能使未見者得無見之妙見。",
        "from": "X68n1319_001:0524b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未聞者入不聞之妙聞。",
        "from": "X68n1319_001:0524b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未知者徹無知之正知。",
        "from": "X68n1319_001:0524b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未解者成無解之大解。",
        "from": "X68n1319_001:0524b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是人天眼目。",
        "from": "X68n1319_001:0524b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上宗乘。",
        "from": "X68n1319_001:0524b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　至於淨土法門。",
        "from": "X68n1319_001:0524b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖與禪宗似無交涉。",
        "from": "X68n1319_001:0524b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但念佛何礙參禪。",
        "from": "X68n1319_001:0524b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果其深達性海之禪人。",
        "from": "X68n1319_001:0524b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨業正可以兼修。",
        "from": "X68n1319_001:0524b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於焉隨喜真如。",
        "from": "X68n1319_001:0524b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓證妙果。",
        "from": "X68n1319_001:0524b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲棲蓮池大師。",
        "from": "X68n1319_001:0524b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行清淨。",
        "from": "X68n1319_001:0524b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃曾參悟有得者。",
        "from": "X68n1319_001:0524b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閱其雲棲法彚一書。",
        "from": "X68n1319_001:0524b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見論雖未及數善知識之洞徹。",
        "from": "X68n1319_001:0524b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然非不具正知正見。",
        "from": "X68n1319_001:0524b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如著相執有者之可比擬。",
        "from": "X68n1319_001:0524b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦採其要語別為一卷。",
        "from": "X68n1319_001:0524c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以附於後。",
        "from": "X68n1319_001:0524c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼此淨土一門。",
        "from": "X68n1319_001:0524c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使未了證者。",
        "from": "X68n1319_001:0524c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建菩提道場。",
        "from": "X68n1319_001:0524c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已了證者。",
        "from": "X68n1319_001:0524c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為妙覺果海途路之助。",
        "from": "X68n1319_001:0524c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰為總序。",
        "from": "X68n1319_001:0524c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弁於篇端。",
        "from": "X68n1319_001:0524c03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刊示來今。",
        "from": "X68n1319_001:0524c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉惠後學。",
        "from": "X68n1319_001:0524c04_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶幾因指見月。",
        "from": "X68n1319_001:0524c04_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得魚忘筌。",
        "from": "X68n1319_001:0524c04_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破外道之昏蒙。",
        "from": "X68n1319_001:0524c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奪小乘之戔弇。",
        "from": "X68n1319_001:0524c05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕有厚望焉。",
        "from": "X68n1319_001:0524c05_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍正癸丑四月朔日",
        "from": "X68n1319_001:0524c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御選語錄總目",
        "from": "X68n1319_001:0524c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一冊",
        "from": "X68n1319_001:0524c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷一",
        "from": "X68n1319_001:0524c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大智圓正聖僧肇法師(卍收肇論與寶藏論)卷二洞明妙智永嘉覺禪師(卍收永嘉集與證道歌)卷三妙覺普度和聖寒山大士(卍收詩集)圓覺慈度合聖拾得大士(卍收詩集)第二冊卷四靈覺大圓溈山祐禪師(卍收語要)真證通智仰山寂禪師(卍收語要)卷五圓證直指真際趙州諗禪師(卍收語要)卷六慈雲匡真弘明雲門偃禪師(卍收語要)第三冊卷七妙圓正修智覺永明壽禪師(卍收唯心訣宗鏡錄序萬善同歸集與心賦)第四冊卷八大慈圓通禪仙紫陽真人(卍收真悟篇外集)卷九正智明覺雪竇顯禪師(卍收語要)第五冊卷十明宗真覺圓悟勤禪師(卍收語要)第六冊卷十一大覺普濟能仁玉琳琇國師(卍收語要)明道正覺[卄/卬]溪森禪師(卍收語要)第七冊卷十二和碩雍親王圓明居士(卍收語錄)上諭二道(附刻)圓明百問第八冊卷十三　(外集)雲棲蓮池大師第九冊卷十四　(前集上)歷代禪師第十冊卷十五　(前集下)歷代禪師第十一冊卷十六　(後集上)歷代禪師第十二冊卷十七　(後集中)歷代禪師第十三冊卷十八　(後集下)歷代禪師第十四冊卷十九當今法會(附刻)御選語錄御製序漢明帝時。",
        "from": "X68n1319_001:0524c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法始入中國。",
        "from": "X68n1319_001:0525c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛於晉宋間。",
        "from": "X68n1319_001:0525c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公其殊勝者也。",
        "from": "X68n1319_001:0525c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向傳泥洹宗旨。",
        "from": "X68n1319_001:0525c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由遠公而始聞於此土。",
        "from": "X68n1319_001:0525c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然觀蓮社高賢傳中所載遠公之語。",
        "from": "X68n1319_001:0525c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公固非洞明泥洹宗旨者。",
        "from": "X68n1319_001:0525c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徒聞其說耳。",
        "from": "X68n1319_001:0525c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧肇與遠公同時。",
        "from": "X68n1319_001:0525c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉有遠公。",
        "from": "X68n1319_001:0525c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦有僧肇。",
        "from": "X68n1319_001:0525c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言淨土者。",
        "from": "X68n1319_001:0525c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推遠公。",
        "from": "X68n1319_001:0525c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言講經者。",
        "from": "X68n1319_001:0525c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推僧肇。",
        "from": "X68n1319_001:0525c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗徒皆視為小乘。",
        "from": "X68n1319_001:0525c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂是菩提達摩以前時人。",
        "from": "X68n1319_001:0525c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震旦未聞教外別傳之旨。",
        "from": "X68n1319_001:0525c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得入祖席焉。",
        "from": "X68n1319_001:0525c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕閱肇法師所作般若無知．涅槃無名．空有不遷．形山祕寶諸論。",
        "from": "X68n1319_001:0525c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非深明宗旨。",
        "from": "X68n1319_001:0525c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何能了了如斯。",
        "from": "X68n1319_001:0525c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此講經。",
        "from": "X68n1319_001:0525c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正是不立文字。",
        "from": "X68n1319_001:0525c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛慧命。",
        "from": "X68n1319_001:0525c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奚隔封疆。",
        "from": "X68n1319_001:0525c13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有何今古。",
        "from": "X68n1319_001:0525c14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈得謂菩提達摩未來以前。",
        "from": "X68n1319_001:0525c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "震旦無宗旨哉。",
        "from": "X68n1319_001:0525c14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故刪輯其要文。",
        "from": "X68n1319_001:0525c15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序而刊行之。",
        "from": "X68n1319_001:0525c15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者勿於長江一葦。",
        "from": "X68n1319_001:0525c15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[葸-十+夕]嶺隻履邊。",
        "from": "X68n1319_001:0525c16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目起狂華。",
        "from": "X68n1319_001:0525c16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知菩提達摩見梁武時。",
        "from": "X68n1319_001:0525c16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所從來。",
        "from": "X68n1319_001:0525c17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇宋雲時。",
        "from": "X68n1319_001:0525c17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無所去也。",
        "from": "X68n1319_001:0525c17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍正十一年癸丑四月望日",
        "from": "X68n1319_001:0525c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "御選大智圓正聖僧肇法師論",
        "from": "X68n1319_001:0525c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肇論序",
        "from": "X68n1319_001:0525c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧達率愚。",
        "from": "X68n1319_001:0525c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序長安釋僧肇法師所作宗本．不遷等四論。",
        "from": "X68n1319_001:0525c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X68n1319_001:0526a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有美若人。",
        "from": "X68n1319_001:0526a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超語兼默。",
        "from": "X68n1319_001:0526a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標本則句句深達佛心。",
        "from": "X68n1319_001:0526a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明末則言言備通眾教。",
        "from": "X68n1319_001:0526a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達猥生天幸。",
        "from": "X68n1319_001:0526a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逢此正音。",
        "from": "X68n1319_001:0526a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每至披尋。",
        "from": "X68n1319_001:0526a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不勝手舞。",
        "from": "X68n1319_001:0526a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓願生生盡命弘述。",
        "from": "X68n1319_001:0526a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫神道不形。",
        "from": "X68n1319_001:0526a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心敏難繪。",
        "from": "X68n1319_001:0526a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊寄一序。",
        "from": "X68n1319_001:0526a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請俟來哲。",
        "from": "X68n1319_001:0526a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋大分深義。",
        "from": "X68n1319_001:0526a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厥號本無。",
        "from": "X68n1319_001:0526a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故建言宗旨。",
        "from": "X68n1319_001:0526a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標乎實相。",
        "from": "X68n1319_001:0526a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開空法道。",
        "from": "X68n1319_001:0526a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫逾真俗。",
        "from": "X68n1319_001:0526a05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以次釋二諦。",
        "from": "X68n1319_001:0526a05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯佛教門。",
        "from": "X68n1319_001:0526a06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但圓正之因。",
        "from": "X68n1319_001:0526a06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無尚般若。",
        "from": "X68n1319_001:0526a06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至極之果。",
        "from": "X68n1319_001:0526a06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有涅槃。",
        "from": "X68n1319_001:0526a06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故末啟重元。",
        "from": "X68n1319_001:0526a07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明眾聖之所宅。",
        "from": "X68n1319_001:0526a07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖以性空擬本。",
        "from": "X68n1319_001:0526a07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無本可稱。",
        "from": "X68n1319_001:0526a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語本絕言。",
        "from": "X68n1319_001:0526a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非心行處。",
        "from": "X68n1319_001:0526a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則不遷當俗。",
        "from": "X68n1319_001:0526a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俗則不生。",
        "from": "X68n1319_001:0526a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不真為真。",
        "from": "X68n1319_001:0526a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真但名說。",
        "from": "X68n1319_001:0526a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能崇茲一道。",
        "from": "X68n1319_001:0526a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無言二諦。",
        "from": "X68n1319_001:0526a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯則靜照之功著。",
        "from": "X68n1319_001:0526a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故般若無知。",
        "from": "X68n1319_001:0526a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無名之德興。",
        "from": "X68n1319_001:0526a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而涅槃不稱。",
        "from": "X68n1319_001:0526a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余謂此說周圓。",
        "from": "X68n1319_001:0526a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罄佛淵海。",
        "from": "X68n1319_001:0526a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浩博無涯。",
        "from": "X68n1319_001:0526a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮法體相。",
        "from": "X68n1319_001:0526a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪論第一。",
        "from": "X68n1319_001:0526a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肇公其人矣。",
        "from": "X68n1319_001:0526a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳燈錄載。",
        "from": "X68n1319_001:0526a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧肇在姚秦問大辟。",
        "from": "X68n1319_001:0526a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師乞七日假。",
        "from": "X68n1319_001:0526a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著寶藏論畢。",
        "from": "X68n1319_001:0526a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨刑時說偈曰。",
        "from": "X68n1319_001:0526a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大元無主。",
        "from": "X68n1319_001:0526a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五陰本來空。",
        "from": "X68n1319_001:0526a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將頭臨白刃。",
        "from": "X68n1319_001:0526a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶似斬春風。",
        "from": "X68n1319_001:0526a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此偈非肇所作也。",
        "from": "X68n1319_001:0526a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肇為鳩摩羅什高弟。",
        "from": "X68n1319_001:0526a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦王姚興命入逍遙園。",
        "from": "X68n1319_001:0526a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "助什詳定經論。",
        "from": "X68n1319_001:0526a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊禮有加。",
        "from": "X68n1319_001:0526a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六國春秋．僧肇傳云。",
        "from": "X68n1319_001:0526a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以姚秦弘始十六年卒於長安。",
        "from": "X68n1319_001:0526a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時晉義熈十年也。",
        "from": "X68n1319_001:0526a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況典刑之人豈有給假著論之理。",
        "from": "X68n1319_001:0526a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則肇法師之以吉祥滅度。",
        "from": "X68n1319_001:0526a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信矣。",
        "from": "X68n1319_001:0526a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事既子虗。",
        "from": "X68n1319_001:0526a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈非師作。",
        "from": "X68n1319_001:0526a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋訛傳焉。",
        "from": "X68n1319_001:0526a20_15",
        "context_with_next_sentence": false
    }
]