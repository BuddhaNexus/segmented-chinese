[
    {
        "source_sentence": "佛說如意摩尼陀羅尼經",
        "from": "T21n1403_001:0919c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T21n1403_001:0919c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T21n1403_001:0919c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1403_001:0919c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國迦利哩城。",
        "from": "T21n1403_001:0919c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告尊者阿難。",
        "from": "T21n1403_001:0919c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今有陀羅尼能除一切暴惡雷電。",
        "from": "T21n1403_001:0919c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當受持。",
        "from": "T21n1403_001:0919c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此隨求如意寶經。",
        "from": "T21n1403_001:0919c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去如來應正等覺親所宣說。",
        "from": "T21n1403_001:0919c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦說。",
        "from": "T21n1403_001:0919c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其世間行大悲愍。",
        "from": "T21n1403_001:0919c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益安樂天上人間一切有情。",
        "from": "T21n1403_001:0919c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難白言唯然世尊。",
        "from": "T21n1403_001:0919c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願樂欲聞我今受持。",
        "from": "T21n1403_001:0919c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難汝等。",
        "from": "T21n1403_001:0919c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知東方有雷電名曰阿伽。",
        "from": "T21n1403_001:0919c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方有雷電名曰設帝嚕。",
        "from": "T21n1403_001:0919c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方有雷電名曰哆鉢囉(二合)婆。",
        "from": "T21n1403_001:0919c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方有雷電名曰掃那摩儞。",
        "from": "T21n1403_001:0919c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難若有善男子善女人。",
        "from": "T21n1403_001:0919c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知此雷電名號及住處方位。",
        "from": "T21n1403_001:0919c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切雷電不怖彼人。",
        "from": "T21n1403_001:0919c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若所在之處書寫此雷電名號。",
        "from": "T21n1403_001:0919c17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持供養。",
        "from": "T21n1403_001:0919c18_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切雷電而不能傷。",
        "from": "T21n1403_001:0919c18_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說此擁護真言章句。",
        "from": "T21n1403_001:0919c18_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引)儞彌儞彌儞彌孕(二合)馱哩(引)怛哩(二合)路(引)迦(引)路吉儞輸羅播(引)尼儞囉乞叉(二合)[牟*含](切身)薩哩嚩(二合)尾儞用(二合)婆曳(引)毘藥(二合)娑嚩(二合)賀(引)爾時聖觀自在菩薩摩訶薩在大眾中。",
        "from": "T21n1403_001:0919c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起合掌向佛。",
        "from": "T21n1403_001:0919c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T21n1403_001:0919c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於此正法。",
        "from": "T21n1403_001:0919c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說擁護真言章句。",
        "from": "T21n1403_001:0919c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引)尾曩(引)舍鉢囉(二合)怛也(二合)體迦鉢囉(二合)怛也(二合)彌怛哩(二合)輸弟目訖帝(二合)尾摩隷(引)鉢囉(二合)婆(引)娑迦(二合)哩(引)桉拏哩(引)半拏哩(引)濕尾(二合引)帝(引)半拏囉嚩(引)悉儞麼(引)帝(引)迦囉(引)羅迦閉羅賓誐羅(引)乞史(二合)那地目乞史(二合)囉乞史(二合)囉乞史(二合)[牟*含](切身引)薩哩嚩(二合引)迦(引)羅沒哩(二合)底喻(二合)婆曳(引)毘藥(二合)麼(引)彌(引)鉢舍滿(二合)覩薩哩嚩(二合引)迦(引)羅沒哩(二合)怛也(二合)嚩(入)阿哩也(二合引)嚩路(引)吉帝(引)濕嚩(二合)囉帝(引)惹娑(引)娑嚩(二合引)賀爾時祕密主金剛手菩薩。",
        "from": "T21n1403_001:0919c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛前合掌頂禮。",
        "from": "T21n1403_001:0920a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T21n1403_001:0920a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此正法之中。",
        "from": "T21n1403_001:0920a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說陀羅尼真言章句。",
        "from": "T21n1403_001:0920a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引)母儞母儞母儞摩帝母儞摩帝蘇摩帝摩賀(引)摩帝賀(引)賀(引)賀(引)賀(引)摩帶(引)哩曩(二合引)悉底(二合)帝(引)播(引)半嚩日囉(二合)播(引)尼囉憾涅哩(二合)茶娑嚩(二合引)賀(引)世尊我此陀羅尼。",
        "from": "T21n1403_001:0920a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名無能勝擁護有情。",
        "from": "T21n1403_001:0920a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人書寫憶念。",
        "from": "T21n1403_001:0920a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切恐怖及其中夭悉令解脫。",
        "from": "T21n1403_001:0920a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大梵天王索訶世界主。",
        "from": "T21n1403_001:0920a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T21n1403_001:0920a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我為利益一切眾生。",
        "from": "T21n1403_001:0920a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此正法亦說陀羅尼真言章句。",
        "from": "T21n1403_001:0920a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引)呬隷彌隷唧隷娑嚩(二合引)賀(引)沒囉(二合)憾摩(二合)布哩(引)摩賀(引)沒囉(二合)憾摩(二合引)尼(引)沒囉(二合)憾摩(二合)誐哩鼻(二合引)補瑟波(二合)設娑哆(二合)哩娑嚩(二合引)賀世尊我此陀羅尼名梵天杖。",
        "from": "T21n1403_001:0920a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護一切有情。",
        "from": "T21n1403_001:0920a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離中夭不生恐怖亦能除滅一切罪業。",
        "from": "T21n1403_001:0920a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時帝釋天主。",
        "from": "T21n1403_001:0920a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣佛前立合掌頂禮。",
        "from": "T21n1403_001:0920a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T21n1403_001:0920a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於此正法。",
        "from": "T21n1403_001:0920a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說陀羅尼真言章句。",
        "from": "T21n1403_001:0920a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引)沒馱麼(引)旦膩(引)麼(引)儞儞憍(引)哩巘(引)馱(引)哩贊拏隷摩(引)鄧詣布訖嚩(二合)悉娑(引)羅沒囉(二合)帝(引)呬曩末馱用(二合)哆羅尼滿覩(引)隷儞計(引)作迦囉(二合)嚩(引)枳舍嚩哩舍(引)嚩哩娑嚩(二合引)賀(引)世尊我此陀羅尼名金剛座。",
        "from": "T21n1403_001:0920b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫一切怖畏。",
        "from": "T21n1403_001:0920b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離一切中夭。",
        "from": "T21n1403_001:0920b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時持國天王增長天王廣目天王多聞天王俱詣佛前合掌頂禮。",
        "from": "T21n1403_001:0920b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T21n1403_001:0920b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等於此正法。",
        "from": "T21n1403_001:0920b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦說陀羅尼真言章句。",
        "from": "T21n1403_001:0920b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他補瑟閉(二合引)蘇補瑟閉(二合引)度波波哩賀(引)哩(引)阿(引)哩也(二合)鉢囉(二合)設悉帝(二合引)扇(引)帝(引)儞哩目(二合)訖帝(二合引)夢誐隷曳(二合)呬囉拏也(二合)誐哩鼻(二合引)娑覩(二合)帝(引)娑哆(二合)尾帝(引)娑嚩(二合引)賀世尊我等四大天王作說陀羅尼名為無怖。",
        "from": "T21n1403_001:0920b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其恐怖能施無畏。",
        "from": "T21n1403_001:0920b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離中夭增延壽命。",
        "from": "T21n1403_001:0920b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時復有大海龍王。",
        "from": "T21n1403_001:0920b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂大意龍王雷光龍王。",
        "from": "T21n1403_001:0920b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無熱惱龍王電舌龍王百光龍王。",
        "from": "T21n1403_001:0920b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱詣佛所合掌頂禮白佛言世尊。",
        "from": "T21n1403_001:0920b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有陀羅尼名如意寶。",
        "from": "T21n1403_001:0920b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護有情。",
        "from": "T21n1403_001:0920b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人書寫讀誦。",
        "from": "T21n1403_001:0920b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除一切雷電怖畏。",
        "from": "T21n1403_001:0920b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切中夭一切諸毒一切惡病。",
        "from": "T21n1403_001:0920b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及不吉祥鬼神亦不得便。",
        "from": "T21n1403_001:0920b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若持此真言。",
        "from": "T21n1403_001:0920b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等龍類悉皆悲愍不生嫉妬。",
        "from": "T21n1403_001:0920b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何龍趣之類行嫉妬心。",
        "from": "T21n1403_001:0920b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞此法而無嫉妬。",
        "from": "T21n1403_001:0920b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T21n1403_001:0920b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也(二合)他(引)阿惹哩(引)摩摩哩(引)阿蜜哩(二合)帝(引)阿訖叉(二合)曳(引)阿尾也(二合)曳(引)奔尼也(二合)鉢哩也(二合)曳(引)薩哩嚩(二合)播(引)波鉢囉(二合)舍摩儞娑嚩(二合引)賀(引)阿哩也(二合)奔拏燥(引)播(引)枳曳(引)娑嚩(二合引)賀印捺囉(二合引)舍儞曳(引)娑嚩(二合引)賀(引)彌(引)伽(引)舍儞曳(引)娑嚩(二合引)賀(引)爾時世尊聞彼大梵天王天帝釋護世四天王及大龍王等說此陀羅尼。",
        "from": "T21n1403_001:0920b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉善哉。",
        "from": "T21n1403_001:0920c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令多人得大安藥。",
        "from": "T21n1403_001:0920c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等護持流行正法。",
        "from": "T21n1403_001:0920c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經已。",
        "from": "T21n1403_001:0920c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大眾天龍阿修羅乾達婆等。",
        "from": "T21n1403_001:0920c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T21n1403_001:0920c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說如意摩尼陀羅尼經",
        "from": "T21n1403_001:0920c09_0",
        "context_with_next_sentence": false
    }
]