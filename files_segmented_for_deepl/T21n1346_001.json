[
    {
        "source_sentence": "諸佛集會陀羅尼經一卷",
        "from": "T21n1346_001:0858c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師提雲般若等奉　制譯",
        "from": "T21n1346_001:0858c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1346_001:0858c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在恒伽河邊。",
        "from": "T21n1346_001:0858c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護世四天王之所圍繞。",
        "from": "T21n1346_001:0858c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告毘沙門等四天王言。",
        "from": "T21n1346_001:0858c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等當知一切眾生。",
        "from": "T21n1346_001:0858c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男若女若長若幼。",
        "from": "T21n1346_001:0858c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆為四種大怖所纏。",
        "from": "T21n1346_001:0858c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂生老病死。",
        "from": "T21n1346_001:0858c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然於其中死怖一種最難除遣。",
        "from": "T21n1346_001:0858c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝說除遣法。",
        "from": "T21n1346_001:0858c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四天王即從座起。",
        "from": "T21n1346_001:0858c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白佛言。",
        "from": "T21n1346_001:0858c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我等今者獲大善利。",
        "from": "T21n1346_001:0858c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得值如來攝受世間施其命故。",
        "from": "T21n1346_001:0858c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊從座而起。",
        "from": "T21n1346_001:0859a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面于東方彈指唱言。",
        "from": "T21n1346_001:0859a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼方所有諸佛如來應正等覺。",
        "from": "T21n1346_001:0859a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不皆為一切眾生。",
        "from": "T21n1346_001:0859a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成阿耨多羅三藐三菩提。",
        "from": "T21n1346_001:0859a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛當知我今為欲哀愍救護諸眾生故。",
        "from": "T21n1346_001:0859a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉先未轉第二法輪。",
        "from": "T21n1346_001:0859a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令眾生色力壽命皆悉增長。",
        "from": "T21n1346_001:0859a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永復無有非時夭橫。",
        "from": "T21n1346_001:0859a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛來此會中。",
        "from": "T21n1346_001:0859a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為護眾生共以威神除其橫苦。",
        "from": "T21n1346_001:0859a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南西北方四維上下皆亦如是。",
        "from": "T21n1346_001:0859a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時如來以佛眼觀十方世界。",
        "from": "T21n1346_001:0859a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一世界皆有諸佛。",
        "from": "T21n1346_001:0859a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "側塞充滿猶如稻麻。",
        "from": "T21n1346_001:0859a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉來此會而為等侶。",
        "from": "T21n1346_001:0859a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然見十方一切世界。",
        "from": "T21n1346_001:0859a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一方處諸佛世尊亦皆遍滿分明顯現。",
        "from": "T21n1346_001:0859a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切諸佛如來。",
        "from": "T21n1346_001:0859a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱時發聲而說呪曰。",
        "from": "T21n1346_001:0859a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "折禮(句一)折羅折禮(句二)毘那(去借音即此字之上聲下有字傍註上字皆倣此)徵(珍里反句三)莎(蘇括反)悉底(都以反下同)雞(句四)斫迦爛揭時(句五)鉢羅舍漫都(句六)薩婆嚕(依魯字本音而轉舌呼之其下口邊作犁羅麗皆倣此)伽(句七)阿那(上)[齒*來](卓諧反句八)俱那(上)[齒*來](句九)摩訶捺[齒*來](句十)折[口*犁]折[口*犁](句十一)醯(呼計反下同)摩具[口*梨](句十二)醯摩儞產(去)地(句十三)醯摩室尼(句十四)吉囉(上)陛(句十五)吉囉(上)鞞(句十六)醯(引聲)俱囉(上)[口*犁](句十七)俱囉(上)[口*犁](句十八)俱末底(句十九)毘奢麼(謀跛反)泥(句二十)戍暑(輸矩反)毘(上)婆(句二十一)阿折禮毘折禮(句二十二)摩毘(上)濫婆(句二十三)呼(去)牟呼(去)牟(句二十四)爾時十方諸佛。",
        "from": "T21n1346_001:0859a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆有金剛密跡王親近圍繞。",
        "from": "T21n1346_001:0859a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此無量金剛王眾。",
        "from": "T21n1346_001:0859a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復共同聲而說呪曰。",
        "from": "T21n1346_001:0859a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[貝*甘](呼濫反引聲句一)[貝*甘](句二)室勢(句三)颯婆(去)訶(句四)爾時毘沙門天王白佛言世尊。",
        "from": "T21n1346_001:0859a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦為擁護眾生說陀羅尼。",
        "from": "T21n1346_001:0859a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其無有非時夭橫。",
        "from": "T21n1346_001:0859a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來垂哀與力。",
        "from": "T21n1346_001:0859a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1346_001:0859b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稅低(句一)稅怛犁(句二)履梨(句三)爾時毘盧勒叉天王亦作是言。",
        "from": "T21n1346_001:0859b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為欲護諸眾生說陀羅尼。",
        "from": "T21n1346_001:0859b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1346_001:0859b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩蹬耆(瞿雞反句一)摩蹬耆(祇里反)尼(儞咨反句二)暑(輸矩反下同)摩暑母(句三)爾時提頭賴吒天王。",
        "from": "T21n1346_001:0859b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為擁護諸眾生故而說呪曰。",
        "from": "T21n1346_001:0859b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "折囇折囇颯婆(去)訶",
        "from": "T21n1346_001:0859b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時毘樓博叉天王亦說呪曰。",
        "from": "T21n1346_001:0859b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跋凌(去)婆(上)婆",
        "from": "T21n1346_001:0859b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告四天王言諸天等此陀羅尼。",
        "from": "T21n1346_001:0859b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從於一切諸佛所生。",
        "from": "T21n1346_001:0859b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛共所知見。",
        "from": "T21n1346_001:0859b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T21n1346_001:0859b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至有能一日之中讀一遍者。",
        "from": "T21n1346_001:0859b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人終不墮於惡趣。",
        "from": "T21n1346_001:0859b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於是人起大師想。",
        "from": "T21n1346_001:0859b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人為欲利益一切眾生。",
        "from": "T21n1346_001:0859b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日日中讀誦斯呪。",
        "from": "T21n1346_001:0859b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生壽命增長。",
        "from": "T21n1346_001:0859b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦令其人災橫怖畏皆得消除。",
        "from": "T21n1346_001:0859b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸惡相及眾疾苦。",
        "from": "T21n1346_001:0859b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水不能漂火不能燒。",
        "from": "T21n1346_001:0859b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀不能傷毒不能害。",
        "from": "T21n1346_001:0859b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在在處處有能讀誦此陀羅尼。",
        "from": "T21n1346_001:0859b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此處則為十方一切諸佛常所護念。",
        "from": "T21n1346_001:0859b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人自書若教人書。",
        "from": "T21n1346_001:0859b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人則為承事供養一切諸佛。",
        "from": "T21n1346_001:0859b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1346_001:0859b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於眾生能作饒益。",
        "from": "T21n1346_001:0859b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為供養一切佛故。",
        "from": "T21n1346_001:0859b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有專欲擁護其身。",
        "from": "T21n1346_001:0859b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當書此呪佩著身上。",
        "from": "T21n1346_001:0859b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若所在之處有深信法善男子善女人等。",
        "from": "T21n1346_001:0859b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或遇災難欲令除滅。",
        "from": "T21n1346_001:0859b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾應如法受持此呪。",
        "from": "T21n1346_001:0859b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持呪法著。",
        "from": "T21n1346_001:0859b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當簡擇清淨之處。",
        "from": "T21n1346_001:0859b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以栴檀末而塗其地。",
        "from": "T21n1346_001:0859b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成一方壇縱廣七肘。",
        "from": "T21n1346_001:0859b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人應從月初八日。",
        "from": "T21n1346_001:0859b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香湯洗浴著新淨衣受八戒齋。",
        "from": "T21n1346_001:0859b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯食粳米石蜜牛乳。",
        "from": "T21n1346_001:0859b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取黑沈香及龍腦香。",
        "from": "T21n1346_001:0859b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共滿一兩置於壇上。",
        "from": "T21n1346_001:0859c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取白檀香或沆水香。",
        "from": "T21n1346_001:0859c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或龍腦香或復丁香迦矩羅香。",
        "from": "T21n1346_001:0859c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而置於壇。",
        "from": "T21n1346_001:0859c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人誦此陀羅尼呪。",
        "from": "T21n1346_001:0859c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪此諸香。",
        "from": "T21n1346_001:0859c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於日日中皆七七遍滿于七日。",
        "from": "T21n1346_001:0859c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至十五日一日不食其日中時。",
        "from": "T21n1346_001:0859c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以欝金香於其壇上作二十一小壇。",
        "from": "T21n1346_001:0859c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其一處中名如來壇。",
        "from": "T21n1346_001:0859c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘二十壇名金剛王壇。",
        "from": "T21n1346_001:0859c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於壇外作四小壇。",
        "from": "T21n1346_001:0859c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名四天王壇復取麝香龍腦白檀欝金之香及紫檀末。",
        "from": "T21n1346_001:0859c07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來壇若散若塗而為供養。",
        "from": "T21n1346_001:0859c08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘諸壇隨取一香而供養之。",
        "from": "T21n1346_001:0859c09_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取乳酪酥及沙糖。",
        "from": "T21n1346_001:0859c10_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其次第以新瓶四口。",
        "from": "T21n1346_001:0859c10_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各別盛之置四天王壇上。",
        "from": "T21n1346_001:0859c11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以淨水著於瓶內。",
        "from": "T21n1346_001:0859c11_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採十二種果樹之花而置其中。",
        "from": "T21n1346_001:0859c12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以香油然十支燈置如來壇。",
        "from": "T21n1346_001:0859c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲供養十方佛故。",
        "from": "T21n1346_001:0859c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘諸壇各然一支。",
        "from": "T21n1346_001:0859c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前所呪諸香之內。",
        "from": "T21n1346_001:0859c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取龍腦及沈水。",
        "from": "T21n1346_001:0859c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如來壇而燒供養。",
        "from": "T21n1346_001:0859c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘壇上然自餘香。",
        "from": "T21n1346_001:0859c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將然香時其如來壇及餘壇香。",
        "from": "T21n1346_001:0859c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應各別誦此神呪而以呪之。",
        "from": "T21n1346_001:0859c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生得聞此香。",
        "from": "T21n1346_001:0859c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非時夭橫靡不除滅。",
        "from": "T21n1346_001:0859c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先所呪香並燒盡已。",
        "from": "T21n1346_001:0859c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後收彼四天王食散於淨處。",
        "from": "T21n1346_001:0859c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此經已。",
        "from": "T21n1346_001:0859c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王及一切世間天人阿修羅乾闥婆等。",
        "from": "T21n1346_001:0859c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜奉行。",
        "from": "T21n1346_001:0859c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛集會陀羅尼經",
        "from": "T21n1346_001:0859c22_0",
        "context_with_next_sentence": false
    }
]