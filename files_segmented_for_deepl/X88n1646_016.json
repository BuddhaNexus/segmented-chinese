[
    {
        "source_sentence": "居士傳十六",
        "from": "X88n1646_016:0213a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏清臣韋城武傳",
        "from": "X88n1646_016:0213a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏清臣名真卿。",
        "from": "X88n1646_016:0213a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琅邪臨河人也。",
        "from": "X88n1646_016:0213a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉開元中進士。",
        "from": "X88n1646_016:0213a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擢制科。",
        "from": "X88n1646_016:0213a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天寶末年為平原太守。",
        "from": "X88n1646_016:0213b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安祿山反。",
        "from": "X88n1646_016:0213b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉兵為諸郡倡。",
        "from": "X88n1646_016:0213b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扼其衝。",
        "from": "X88n1646_016:0213b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大破賊。",
        "from": "X88n1646_016:0213b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅宗即位。",
        "from": "X88n1646_016:0213b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赴行在。",
        "from": "X88n1646_016:0213b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授憲部尚書。",
        "from": "X88n1646_016:0213b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遷御史大夫。",
        "from": "X88n1646_016:0213b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立朝嚴重。",
        "from": "X88n1646_016:0213b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直道而行。",
        "from": "X88n1646_016:0213b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不畏疆禦。",
        "from": "X88n1646_016:0213b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是不容於朝。",
        "from": "X88n1646_016:0213b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屢外轉。",
        "from": "X88n1646_016:0213b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾元初拜浙江節度使。",
        "from": "X88n1646_016:0213b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清臣故信樂佛法。",
        "from": "X88n1646_016:0213b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞受戒於湖州慧明。",
        "from": "X88n1646_016:0213b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問道於江西嚴峻。",
        "from": "X88n1646_016:0213b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時肅宗詔天下立放生池。",
        "from": "X88n1646_016:0213b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清臣為立碑。",
        "from": "X88n1646_016:0213b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌誦主德。",
        "from": "X88n1646_016:0213b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "助宣佛化。",
        "from": "X88n1646_016:0213b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文曰。",
        "from": "X88n1646_016:0213b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇唐七葉。",
        "from": "X88n1646_016:0213b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我乾元大聖光天文武孝感皇帝陛下。",
        "from": "X88n1646_016:0213b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至聖之姿。",
        "from": "X88n1646_016:0213b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬艱難之運。",
        "from": "X88n1646_016:0213b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無少康一旅之眾。",
        "from": "X88n1646_016:0213b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當祿山強暴之初。",
        "from": "X88n1646_016:0213b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾鞏勞謙。",
        "from": "X88n1646_016:0213b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厲精為理。",
        "from": "X88n1646_016:0213b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "推誠而萬方胥悅。",
        "from": "X88n1646_016:0213b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "克己而天下歸仁。",
        "from": "X88n1646_016:0213b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩信侔於四時。",
        "from": "X88n1646_016:0213b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "英威達於八表。",
        "from": "X88n1646_016:0213b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功庸格天地。",
        "from": "X88n1646_016:0213b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝感通神明。",
        "from": "X88n1646_016:0213b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得回紇奚霫契丹大食盾蠻之屬。",
        "from": "X88n1646_016:0213b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "扶服萬里決命而爭先。",
        "from": "X88n1646_016:0213b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朔方河東平盧河西隴右安西黔中嶺南河南之師。",
        "from": "X88n1646_016:0213b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虓[谷*闞]五年椎鋒而効死。",
        "from": "X88n1646_016:0213b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧元惡如拉朽。",
        "from": "X88n1646_016:0213b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉兩京若拾遺。",
        "from": "X88n1646_016:0213b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶緒遁逃已蒙赤族之戮。",
        "from": "X88n1646_016:0213b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思明跧伏行就沸湯之誅。",
        "from": "X88n1646_016:0213b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拯已墜之皇綱。",
        "from": "X88n1646_016:0213b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據再安之宗社。",
        "from": "X88n1646_016:0213b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎上皇於西蜀。",
        "from": "X88n1646_016:0213b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "申子道於中京。",
        "from": "X88n1646_016:0213b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三朝。",
        "from": "X88n1646_016:0213b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大明天子之孝。",
        "from": "X88n1646_016:0213b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問安視膳。",
        "from": "X88n1646_016:0213b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不改家人之禮。",
        "from": "X88n1646_016:0213b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒸蒸然。",
        "from": "X88n1646_016:0213b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翼翼然。",
        "from": "X88n1646_016:0213b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真帝皇之上儀。",
        "from": "X88n1646_016:0213b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誥誓所不及。",
        "from": "X88n1646_016:0213b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而嫗煦萬類。",
        "from": "X88n1646_016:0213b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤勞四生。",
        "from": "X88n1646_016:0213b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃以乾元二年春三月己丑端命左驍衛右郎將史元琮。",
        "from": "X88n1646_016:0213b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中使張廷玉。",
        "from": "X88n1646_016:0213b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉明詔布德音。",
        "from": "X88n1646_016:0213b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始於洋州之興道。",
        "from": "X88n1646_016:0213b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洎山南劍南黔中荊南嶺南江西浙江諸道。",
        "from": "X88n1646_016:0213b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訖於昇州之江寧。",
        "from": "X88n1646_016:0213b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秦淮太平橋臨江帶郭上下五里各置放生池。",
        "from": "X88n1646_016:0213b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡八十一所。",
        "from": "X88n1646_016:0213b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖所以宣皇明而廣慈愛也。",
        "from": "X88n1646_016:0213b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易不云乎。",
        "from": "X88n1646_016:0213b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信及豚魚。",
        "from": "X88n1646_016:0213b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書不云乎。",
        "from": "X88n1646_016:0213b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳥獸魚鼈咸若。",
        "from": "X88n1646_016:0213b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古之聰明睿智神武而不殺者。",
        "from": "X88n1646_016:0213b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非陛下而誰。",
        "from": "X88n1646_016:0213c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔殷湯克仁猶存一面之網。",
        "from": "X88n1646_016:0213c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漢武垂惠纔致[銜金+缶]珠之答。",
        "from": "X88n1646_016:0213c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖流水救涸寶勝稱名。",
        "from": "X88n1646_016:0213c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖事止於當時。",
        "from": "X88n1646_016:0213c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚介祉於終古。",
        "from": "X88n1646_016:0213c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈如今者動者植者水居陸居。",
        "from": "X88n1646_016:0213c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉天下以為池。",
        "from": "X88n1646_016:0213c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罄域中而蒙福。",
        "from": "X88n1646_016:0213c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘陀羅尼加持之力。",
        "from": "X88n1646_016:0213c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竭煩惱海生死之津。",
        "from": "X88n1646_016:0213c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "揆之前古。",
        "from": "X88n1646_016:0213c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾何髣髴。",
        "from": "X88n1646_016:0213c06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微臣職忝方面。",
        "from": "X88n1646_016:0213c06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生丁盛美。",
        "from": "X88n1646_016:0213c06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受恩寖深。",
        "from": "X88n1646_016:0213c06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無以上報。",
        "from": "X88n1646_016:0213c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹緣皐陶．奚斯歌虞頌魯之義。",
        "from": "X88n1646_016:0213c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述天下放生池碑銘一章。",
        "from": "X88n1646_016:0213c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不足雍容明聖萬分之一。",
        "from": "X88n1646_016:0213c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦臣之情懇也。",
        "from": "X88n1646_016:0213c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢刻金石著其辭曰。",
        "from": "X88n1646_016:0213c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明明皇帝。",
        "from": "X88n1646_016:0213c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨下有赫。",
        "from": "X88n1646_016:0213c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至德光大。",
        "from": "X88n1646_016:0213c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾元啟賾。",
        "from": "X88n1646_016:0213c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緯武勘亂。",
        "from": "X88n1646_016:0213c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經文御歷。",
        "from": "X88n1646_016:0213c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝感神明。",
        "from": "X88n1646_016:0213c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義形金石。",
        "from": "X88n1646_016:0213c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁覆華夏。",
        "from": "X88n1646_016:0213c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩加蠻貊。",
        "from": "X88n1646_016:0213c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道冠巍巍。",
        "from": "X88n1646_016:0213c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威深虩虩。",
        "from": "X88n1646_016:0213c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遘茲多難。",
        "from": "X88n1646_016:0213c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "克廣丕績。",
        "from": "X88n1646_016:0213c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶緒致誅。",
        "from": "X88n1646_016:0213c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "史明辟易。",
        "from": "X88n1646_016:0213c12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人道助順。",
        "from": "X88n1646_016:0213c12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天道惡逆。",
        "from": "X88n1646_016:0213c12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撲滅之期。",
        "from": "X88n1646_016:0213c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非朝伊夕。",
        "from": "X88n1646_016:0213c13_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘此寶祚。",
        "from": "X88n1646_016:0213c13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永康宗祐。",
        "from": "X88n1646_016:0213c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業盛君親。",
        "from": "X88n1646_016:0213c13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功崇列辟。",
        "from": "X88n1646_016:0213c14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交禪之際。",
        "from": "X88n1646_016:0213c14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粲然明白。",
        "from": "X88n1646_016:0213c14_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴映來今。",
        "from": "X88n1646_016:0213c14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤高往策。",
        "from": "X88n1646_016:0213c14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去殺流惠。",
        "from": "X88n1646_016:0213c15_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好生立辟。",
        "from": "X88n1646_016:0213c15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "率土之濵。",
        "from": "X88n1646_016:0213c15_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨江是宅。",
        "from": "X88n1646_016:0213c15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂其生性。",
        "from": "X88n1646_016:0213c15_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庇爾鱗翮。",
        "from": "X88n1646_016:0213c16_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "環海為池。",
        "from": "X88n1646_016:0213c16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周天布澤。",
        "from": "X88n1646_016:0213c16_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致茲忠厚。",
        "from": "X88n1646_016:0213c16_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罔弗怡懌。",
        "from": "X88n1646_016:0213c16_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動植依仁。",
        "from": "X88n1646_016:0213c17_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛沉受獲。",
        "from": "X88n1646_016:0213c17_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流水長者。",
        "from": "X88n1646_016:0213c17_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從稱往昔。",
        "from": "X88n1646_016:0213c17_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶勝如來。",
        "from": "X88n1646_016:0213c17_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疇庸允格。",
        "from": "X88n1646_016:0213c18_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德力無競。",
        "from": "X88n1646_016:0213c18_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲孔碩。",
        "from": "X88n1646_016:0213c18_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相時傳聞。",
        "from": "X88n1646_016:0213c18_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚賴弘益。",
        "from": "X88n1646_016:0213c18_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "矧在遭遇。",
        "from": "X88n1646_016:0213c19_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其忘敷錫。",
        "from": "X88n1646_016:0213c19_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真卿勒銘敢告。",
        "from": "X88n1646_016:0213c19_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡百文成。",
        "from": "X88n1646_016:0213c19_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復上表肅宗乞御書其碑額。",
        "from": "X88n1646_016:0213c20_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅宗詔曰。",
        "from": "X88n1646_016:0213c20_59",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕以中孚及物。",
        "from": "X88n1646_016:0213c20_60",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亭育為心。",
        "from": "X88n1646_016:0213c21_61",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡在覆載之中。",
        "from": "X88n1646_016:0213c21_62",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢登仁壽之域。",
        "from": "X88n1646_016:0213c21_63",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四靈是畜。",
        "from": "X88n1646_016:0213c21_64",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一氣同依。",
        "from": "X88n1646_016:0213c22_65",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "江漢為池。",
        "from": "X88n1646_016:0213c22_66",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魚鼈咸若。",
        "from": "X88n1646_016:0213c22_67",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卿慎徽盛典。",
        "from": "X88n1646_016:0213c22_68",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潤色大文。",
        "from": "X88n1646_016:0213c22_69",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以懿文。",
        "from": "X88n1646_016:0213c23_70",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用刊樂石。",
        "from": "X88n1646_016:0213c23_71",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體含飛動。",
        "from": "X88n1646_016:0213c23_72",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韻合鏗鏘。",
        "from": "X88n1646_016:0213c23_73",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成不朽之立言。",
        "from": "X88n1646_016:0213c23_74",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結好生之上德。",
        "from": "X88n1646_016:0213c24_75",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倡而必和。",
        "from": "X88n1646_016:0213c24_76",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自古有之。",
        "from": "X88n1646_016:0213c24_77",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情發於衷。",
        "from": "X88n1646_016:0213c24_78",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予嘉乃意。",
        "from": "X88n1646_016:0214a01_79",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所請者依。",
        "from": "X88n1646_016:0214a01_80",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德宗朝官太子太師。",
        "from": "X88n1646_016:0214a01_81",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為宰相盧[木*巳]所嫉。",
        "from": "X88n1646_016:0214a01_82",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李希烈反請遣清臣往宣詔旨。",
        "from": "X88n1646_016:0214a02_83",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希烈欲降之萬方。",
        "from": "X88n1646_016:0214a02_84",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不屈。",
        "from": "X88n1646_016:0214a03_85",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒為賊所殺。",
        "from": "X88n1646_016:0214a03_86",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年七十七。",
        "from": "X88n1646_016:0214a03_87",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淮泗平子頵碩以其喪歸。",
        "from": "X88n1646_016:0214a03_88",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將易棺以葬。",
        "from": "X88n1646_016:0214a04_89",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發之。",
        "from": "X88n1646_016:0214a04_90",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏色如生(唐書．魯公文集．鐔津集)。",
        "from": "X88n1646_016:0214a04_91",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "韋城武名臯。",
        "from": "X88n1646_016:0214a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "京兆萬年人也。",
        "from": "X88n1646_016:0214a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生彌月。",
        "from": "X88n1646_016:0214a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父飯僧祈福。",
        "from": "X88n1646_016:0214a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一胡僧不召而至。",
        "from": "X88n1646_016:0214a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐之庭中。",
        "from": "X88n1646_016:0214a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既食。",
        "from": "X88n1646_016:0214a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳母抱兒出。",
        "from": "X88n1646_016:0214a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡僧忽升階謂兒曰別久無恙乎。",
        "from": "X88n1646_016:0214a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒目僧而笑。",
        "from": "X88n1646_016:0214a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾詰其故。",
        "from": "X88n1646_016:0214a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡僧曰。",
        "from": "X88n1646_016:0214a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此兒諸葛武侯後身也。",
        "from": "X88n1646_016:0214a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夙有惠於蜀。",
        "from": "X88n1646_016:0214a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他日當為蜀帥。",
        "from": "X88n1646_016:0214a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受蜀人之福。",
        "from": "X88n1646_016:0214a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾與之有舊。",
        "from": "X88n1646_016:0214a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故來相視。",
        "from": "X88n1646_016:0214a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父因以武字之。",
        "from": "X88n1646_016:0214a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而起家帥府。",
        "from": "X88n1646_016:0214a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為監察御史。",
        "from": "X88n1646_016:0214a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德宗朝知隴州行營留事。",
        "from": "X88n1646_016:0214a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱泚反。",
        "from": "X88n1646_016:0214a12_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "署為御史。",
        "from": "X88n1646_016:0214a12_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城武斬其使。",
        "from": "X88n1646_016:0214a12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣兄平乃弇赴行在授隴州刺史。",
        "from": "X88n1646_016:0214a12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置奉義軍。",
        "from": "X88n1646_016:0214a13_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拜節度使。",
        "from": "X88n1646_016:0214a13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貞元初移劒南西川節度使。",
        "from": "X88n1646_016:0214a13_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治蜀二十有一年。",
        "from": "X88n1646_016:0214a14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數出師破吐蕃。",
        "from": "X88n1646_016:0214a14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "服南詔。",
        "from": "X88n1646_016:0214a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "府庫既實。",
        "from": "X88n1646_016:0214a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三年一復其民賦。",
        "from": "X88n1646_016:0214a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜀人安之。",
        "from": "X88n1646_016:0214a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "封南康郡王。",
        "from": "X88n1646_016:0214a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雅信樂佛法。",
        "from": "X88n1646_016:0214a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請清凉國師著法界觀元鏡一卷。",
        "from": "X88n1646_016:0214a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞作鸚鵡舍利記曰。",
        "from": "X88n1646_016:0214a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元精以五氣授萬類。",
        "from": "X88n1646_016:0214a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖鱗介羽毛必有感清英淳粹者矣。",
        "from": "X88n1646_016:0214a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或炳耀離火。",
        "from": "X88n1646_016:0214a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或稟奇蒼精。",
        "from": "X88n1646_016:0214a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆應乎人文以奉若時政。",
        "from": "X88n1646_016:0214a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則有革彼禽類習乎能言。",
        "from": "X88n1646_016:0214a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了空相於一念。",
        "from": "X88n1646_016:0214a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "留真骨於已斃。",
        "from": "X88n1646_016:0214a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殆由元聖示現。",
        "from": "X88n1646_016:0214a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感於人心。",
        "from": "X88n1646_016:0214a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同夫異緣。",
        "from": "X88n1646_016:0214a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用一真化。",
        "from": "X88n1646_016:0214a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前歲有献鸚鵡鳥者。",
        "from": "X88n1646_016:0214a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "河東裴氏以此鳥名載梵經。",
        "from": "X88n1646_016:0214a21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智殊常類。",
        "from": "X88n1646_016:0214a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常狎而敬之。",
        "from": "X88n1646_016:0214a22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始告以六齋之禁。",
        "from": "X88n1646_016:0214a22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比及辰後非時之食。",
        "from": "X88n1646_016:0214a23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終夕不視。",
        "from": "X88n1646_016:0214a23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或教以持佛名號者。",
        "from": "X88n1646_016:0214a23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當由有念以至無念。",
        "from": "X88n1646_016:0214a24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則仰首奮翼若承若聽。",
        "from": "X88n1646_016:0214a24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後或俾之念佛。",
        "from": "X88n1646_016:0214b01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則默然而不答。",
        "from": "X88n1646_016:0214b01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或謂之不念即唱言阿彌陀佛。",
        "from": "X88n1646_016:0214b01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷試如一。",
        "from": "X88n1646_016:0214b02_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾無爽異。",
        "from": "X88n1646_016:0214b02_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予謂其以有念為緣生。",
        "from": "X88n1646_016:0214b02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無念為真際。",
        "from": "X88n1646_016:0214b03_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣生不答為緣起也。",
        "from": "X88n1646_016:0214b03_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真際離言言本空也。",
        "from": "X88n1646_016:0214b03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每虗室或曙發和雅音。",
        "from": "X88n1646_016:0214b04_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穆如笙竽。",
        "from": "X88n1646_016:0214b04_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念相續。",
        "from": "X88n1646_016:0214b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞之者莫不洗然而嘉善矣。",
        "from": "X88n1646_016:0214b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以今年七月悴而不懌。",
        "from": "X88n1646_016:0214b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而日甚。",
        "from": "X88n1646_016:0214b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馴養者知其將盡。",
        "from": "X88n1646_016:0214b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃鳴磬告曰。",
        "from": "X88n1646_016:0214b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將西歸乎。",
        "from": "X88n1646_016:0214b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為爾擊磬。",
        "from": "X88n1646_016:0214b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾其存念。",
        "from": "X88n1646_016:0214b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每一擊磬。",
        "from": "X88n1646_016:0214b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一稱阿彌陀佛。",
        "from": "X88n1646_016:0214b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暨十擊磬而十念成。",
        "from": "X88n1646_016:0214b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斂羽委足不震不仆。",
        "from": "X88n1646_016:0214b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奄然而絕。",
        "from": "X88n1646_016:0214b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按釋典十念成往生西方。",
        "from": "X88n1646_016:0214b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云得佛慧者歿有舍利。",
        "from": "X88n1646_016:0214b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂命火以闍維之法。",
        "from": "X88n1646_016:0214b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘燼之末果得舍利十餘粒。",
        "from": "X88n1646_016:0214b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "炯爾耀目。",
        "from": "X88n1646_016:0214b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瑩然在掌。",
        "from": "X88n1646_016:0214b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識者驚視。",
        "from": "X88n1646_016:0214b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞者駭聽。",
        "from": "X88n1646_016:0214b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有高僧慧觀常詣五臺山巡禮聖迹。",
        "from": "X88n1646_016:0214b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞說此鳥。",
        "from": "X88n1646_016:0214b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涕泪悲泣。",
        "from": "X88n1646_016:0214b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請以舍利於靈山用陶甓建塔。",
        "from": "X88n1646_016:0214b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旌其異也。",
        "from": "X88n1646_016:0214b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予謂。",
        "from": "X88n1646_016:0214b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古之所以通聖神。",
        "from": "X88n1646_016:0214b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "階至化者。",
        "from": "X88n1646_016:0214b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女媧蛇軀以嗣帝。",
        "from": "X88n1646_016:0214b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中衍鳥身而建侯。",
        "from": "X88n1646_016:0214b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紀乎策書。",
        "from": "X88n1646_016:0214b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其誰曰語恠。",
        "from": "X88n1646_016:0214b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而況此鳥有宏於道。",
        "from": "X88n1646_016:0214b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖證昭昭。",
        "from": "X88n1646_016:0214b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡可默也。",
        "from": "X88n1646_016:0214b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是用不愧。",
        "from": "X88n1646_016:0214b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直書於辭。",
        "from": "X88n1646_016:0214b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順宗朝王叔文等亂政。",
        "from": "X88n1646_016:0214b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城武上表請太子監國。",
        "from": "X88n1646_016:0214b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暴叔文等之姦。",
        "from": "X88n1646_016:0214b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而太子遂受禪。",
        "from": "X88n1646_016:0214b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叔文等皆罷黜。",
        "from": "X88n1646_016:0214b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是歲卒於西川。",
        "from": "X88n1646_016:0214b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈太師。",
        "from": "X88n1646_016:0214b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡忠武。",
        "from": "X88n1646_016:0214b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蜀民思其德。",
        "from": "X88n1646_016:0214b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立廟祀之(唐書．宣室志．佛祖通載)。",
        "from": "X88n1646_016:0214b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_016:0214b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記稱顏公少遇道士陶八。",
        "from": "X88n1646_016:0214b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八得鍊神之術。",
        "from": "X88n1646_016:0214b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "期以他日待公於羅浮。",
        "from": "X88n1646_016:0214b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公既死。",
        "from": "X88n1646_016:0214b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人至羅浮見二客圍棋。",
        "from": "X88n1646_016:0214b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一客顧之曰。",
        "from": "X88n1646_016:0214b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩寄一書於北山顏氏。",
        "from": "X88n1646_016:0214b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃受書而還。",
        "from": "X88n1646_016:0214b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其子得書大驚曰。",
        "from": "X88n1646_016:0214b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此先太師手筆也。",
        "from": "X88n1646_016:0214b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公之得仙。",
        "from": "X88n1646_016:0214b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無足異者。",
        "from": "X88n1646_016:0214b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然予讀公書。",
        "from": "X88n1646_016:0214b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其於佛法信向久矣。",
        "from": "X88n1646_016:0214b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若韋公者。",
        "from": "X88n1646_016:0214b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其亦顏公之亞也。",
        "from": "X88n1646_016:0214c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故合而論之。",
        "from": "X88n1646_016:0214c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_016:0214c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此大人物。",
        "from": "X88n1646_016:0214c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却以兩篇文字作對合而傳之。",
        "from": "X88n1646_016:0214c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抑何妙遠不測。",
        "from": "X88n1646_016:0214c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰慈悲心所發故。",
        "from": "X88n1646_016:0214c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宏法深心",
        "from": "X88n1646_016:0214c03_5",
        "context_with_next_sentence": false
    }
]