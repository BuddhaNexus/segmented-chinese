[
    {
        "source_sentence": "妙吉祥平等觀門大教王經略出",
        "from": "T20n1194_001:0934a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩儀",
        "from": "T20n1194_001:0934a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋大契丹國師中天竺摩竭陀國",
        "from": "T20n1194_001:0934a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏法師慈賢譯",
        "from": "T20n1194_001:0934a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸命一切佛　　諸大菩薩眾",
        "from": "T20n1194_001:0934a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我今說護摩　　種種之儀式",
        "from": "T20n1194_001:0934a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　先誦於真言　　加持其鍬钁",
        "from": "T20n1194_001:0934a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　後應廣分別　　加持真言曰",
        "from": "T20n1194_001:0934a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)[寧*頁]佉曩嚩蘇弟(二)娑嚩(二合)賀誦此真言加持鍬钁。",
        "from": "T20n1194_001:0934a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掘護摩爐。",
        "from": "T20n1194_001:0934a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於掘爐前先取河水盛淨器中。",
        "from": "T20n1194_001:0934a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦本部佛真言加持。",
        "from": "T20n1194_001:0934a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以水灑地及淨鍬钁灑掘爐人。",
        "from": "T20n1194_001:0934a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑淨真言曰。",
        "from": "T20n1194_001:0934a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)阿密哩(二合)姤(二)納婆(二合)嚩野(三)吽(四)發吒(五)娑嚩(二合)賀(六引)若依護摩法。",
        "from": "T20n1194_001:0934a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未掘爐前一宿。",
        "from": "T20n1194_001:0934a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上方明王真言加持生飯。",
        "from": "T20n1194_001:0934a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養土地及天龍八部。",
        "from": "T20n1194_001:0934b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可掘爐。",
        "from": "T20n1194_001:0934b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其爐內土收於淨處。",
        "from": "T20n1194_001:0934b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然於河內取砂。",
        "from": "T20n1194_001:0934b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以真言加持其砂。",
        "from": "T20n1194_001:0934b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1194_001:0934b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)嚩蘇麼底(二)嚩蘇室哩(二合)曳(三)唵(四引)誦此真言加持已。",
        "from": "T20n1194_001:0934b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其砂填於爐內。",
        "from": "T20n1194_001:0934b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次用五[聲-耳+木]七寶四鐵末擦於其上。",
        "from": "T20n1194_001:0934b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方可用淨墼。",
        "from": "T20n1194_001:0934b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "砌護摩爐勿用甎作。",
        "from": "T20n1194_001:0934b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先誦金剛羯磨菩薩真言。",
        "from": "T20n1194_001:0934b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持淨墼真言曰。",
        "from": "T20n1194_001:0934b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)嚩日囉(二合)羯囉磨(二合二)劍(三)如是加持已。",
        "from": "T20n1194_001:0934b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用淨墼如法砌之。",
        "from": "T20n1194_001:0934b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩法者說其四種。",
        "from": "T20n1194_001:0934b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其四種者。",
        "from": "T20n1194_001:0934b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一訕底(此言息災)二補瑟置(此云增益或云富貴)三嚩舍(此云敬愛)四阿尾左囉(此云降伏)此四護摩爐亦四種。",
        "from": "T20n1194_001:0934b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其四種者。",
        "from": "T20n1194_001:0934b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求訕底當作圓爐。",
        "from": "T20n1194_001:0934b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求補瑟置(二合)爐如半月或作八角。",
        "from": "T20n1194_001:0934b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求嚩舍爐作四角。",
        "from": "T20n1194_001:0934b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求阿尾左囉爐作三角。",
        "from": "T20n1194_001:0934b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之四種隨所應作。",
        "from": "T20n1194_001:0934b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說護摩爐量。",
        "from": "T20n1194_001:0934b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略有三種。",
        "from": "T20n1194_001:0934b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一供養爐八肘。",
        "from": "T20n1194_001:0934b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是八角爐也。",
        "from": "T20n1194_001:0934b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量深二肘。",
        "from": "T20n1194_001:0934b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二供養爐一肘半。",
        "from": "T20n1194_001:0934b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量深一肘半。",
        "from": "T20n1194_001:0934b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面共六肘。",
        "from": "T20n1194_001:0934b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三供養爐一肘。",
        "from": "T20n1194_001:0934b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面共四肘深亦一肘。",
        "from": "T20n1194_001:0934b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨爐大小作三重緣。",
        "from": "T20n1194_001:0934b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於爐前面第三緣上西邊。",
        "from": "T20n1194_001:0934b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量比正半。",
        "from": "T20n1194_001:0934b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦用淨墼砌作九重至上漸小。",
        "from": "T20n1194_001:0934b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於正半右邊壘作層級。",
        "from": "T20n1194_001:0934b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正半左邊上下直砌。",
        "from": "T20n1194_001:0934b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爐緣三重表為三界。",
        "from": "T20n1194_001:0934b22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其九層級表為九地也。",
        "from": "T20n1194_001:0934b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是作已當於爐內砂上墼下。",
        "from": "T20n1194_001:0934b23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "採於七寶四鐵末五穀。",
        "from": "T20n1194_001:0934b24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如五種子及七寶四鐵所成。",
        "from": "T20n1194_001:0934b25_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶者(金銀真珠水精玉瑠璃琥珀)四鐵者(金銀銅鐵)五穀者(稻穤大麥菉豆油麻)其五穀四鐵末。",
        "from": "T20n1194_001:0934b25_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦毘盧佛真言加持。",
        "from": "T20n1194_001:0934b27_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1194_001:0934b27_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)嚩日囉(二合)馱(二)覩鑁誦此真言已次念四波羅蜜菩薩真言。",
        "from": "T20n1194_001:0934b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持七寶末。",
        "from": "T20n1194_001:0934b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1194_001:0934c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛波羅蜜菩薩。",
        "from": "T20n1194_001:0934c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)薩怛嚩(二合)嚩日哩(二合二)吽(三)寶波羅蜜菩薩。",
        "from": "T20n1194_001:0934c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)囉怛曩(二合)嚩日哩(二合二)怛[口*洛](二合三)法波羅蜜菩薩。",
        "from": "T20n1194_001:0934c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)達囉磨(二合)嚩日哩(二合二)紇哩以(三合三)羯磨波羅蜜菩薩。",
        "from": "T20n1194_001:0934c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)羯囉磨(二合)嚩日哩(二合二)噁(三)誦四明加持已。",
        "from": "T20n1194_001:0934c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用採爐內。",
        "from": "T20n1194_001:0934c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應用一切香末而和於泥。",
        "from": "T20n1194_001:0934c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持泥真言曰。",
        "from": "T20n1194_001:0934c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)嚩蘇麼底(二)室哩(二合)曳(三)室哩(二合)嚩蘇弟(四)婆嚩(二合)賀(引五)誦此真言已。",
        "from": "T20n1194_001:0934c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用香泥而泥於爐。",
        "from": "T20n1194_001:0934c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上次第布置訖。",
        "from": "T20n1194_001:0934c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於爐中諦想壇場運心安布。",
        "from": "T20n1194_001:0934c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作訕底法當想佛身形如白色。",
        "from": "T20n1194_001:0934c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀己身形相亦爾。",
        "from": "T20n1194_001:0934c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應於左手力度第二文上捻數珠。",
        "from": "T20n1194_001:0934c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒物供養。",
        "from": "T20n1194_001:0934c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用水精數珠一百八個。",
        "from": "T20n1194_001:0934c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東坐作補瑟置(二合)法。",
        "from": "T20n1194_001:0934c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想佛金色自身亦爾。",
        "from": "T20n1194_001:0934c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於願度中節內捻數。",
        "from": "T20n1194_001:0934c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠用菩提子一百個。",
        "from": "T20n1194_001:0934c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向南坐。",
        "from": "T20n1194_001:0934c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作嚩舍法。",
        "from": "T20n1194_001:0934c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想佛赤黃色自身亦爾。",
        "from": "T20n1194_001:0934c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於方度中節內捻數珠。",
        "from": "T20n1194_001:0934c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用蓮子九十個。",
        "from": "T20n1194_001:0934c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向西坐。",
        "from": "T20n1194_001:0934c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作阿尾左囉法。",
        "from": "T20n1194_001:0934c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想佛綠色自身亦爾。",
        "from": "T20n1194_001:0934c23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於力度第一文上捻數珠。",
        "from": "T20n1194_001:0934c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用槵子七十個面向北坐。",
        "from": "T20n1194_001:0934c24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作護摩法隨時四種所求之事。",
        "from": "T20n1194_001:0934c24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於爐內各別想壇。",
        "from": "T20n1194_001:0934c25_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所作部主想安中方。",
        "from": "T20n1194_001:0934c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於四種護摩法外。",
        "from": "T20n1194_001:0934c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如恒常供養。",
        "from": "T20n1194_001:0934c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中方想阿閦佛。",
        "from": "T20n1194_001:0934c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數珠或一百八或所用不定。",
        "from": "T20n1194_001:0934c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其上想壇法廣如大教說。",
        "from": "T20n1194_001:0934c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是運想已。",
        "from": "T20n1194_001:0934c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應取吉祥草(用青妙細軟草代之)當用於八結安於爐八方。",
        "from": "T20n1194_001:0934c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表想淨八位。",
        "from": "T20n1194_001:0935a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用草三結安布於爐中表淨三寶位。",
        "from": "T20n1194_001:0935a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以吉祥草三結為一繫。",
        "from": "T20n1194_001:0935a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三繫共九結。",
        "from": "T20n1194_001:0935a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩最初燒而表淨爐法。",
        "from": "T20n1194_001:0935a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更用草二結。",
        "from": "T20n1194_001:0935a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一結安灌頂瓶內。",
        "from": "T20n1194_001:0935a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一結安右手戒度上。",
        "from": "T20n1194_001:0935a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想如護摩杵。",
        "from": "T20n1194_001:0935a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦表淨手法表為金剛手。",
        "from": "T20n1194_001:0935a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其草結如金剛杵形。",
        "from": "T20n1194_001:0935a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以四智真言加持真言曰。",
        "from": "T20n1194_001:0935a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)悉馱路左[寧*頁](二)薩嚩囉他(二合)娑馱[寧*頁](三)娑嚩(二合)賀(引四)唵(引一)計哩計哩麼麼計(二)薩嚩囉他(二合)娑馱[寧*頁](三)娑嚩(二合)賀(引四)唵(引一)濕吠(二合)帝(二)半拏囉嚩悉[寧*頁](三)惹致[寧*頁](四)薩嚩囉他(二合)娑馱[寧*頁](五)娑嚩(二合)賀(引六)唵(引一)哆哩(二)咄哆哩(三)咄哩吽(四)娑嚩(二合)賀(引五)如是加持已。",
        "from": "T20n1194_001:0935a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當取所燒柴。",
        "from": "T20n1194_001:0935a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法乾好者。",
        "from": "T20n1194_001:0935a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可等於施主。",
        "from": "T20n1194_001:0935a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一肘之手量。",
        "from": "T20n1194_001:0935a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香水灑之。",
        "from": "T20n1194_001:0935a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦毘盧真言。",
        "from": "T20n1194_001:0935a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持真言曰。",
        "from": "T20n1194_001:0935a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)嚩日囉(二合)馱覩(二)鑁(三)作法加持已。",
        "from": "T20n1194_001:0935a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安柴於爐內。",
        "from": "T20n1194_001:0935a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根梢應順用。",
        "from": "T20n1194_001:0935a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是刺木柴。",
        "from": "T20n1194_001:0935a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法中不得用。",
        "from": "T20n1194_001:0935a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上布置已。",
        "from": "T20n1194_001:0935a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當呪護摩柴。",
        "from": "T20n1194_001:0935a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦誦毘盧明。",
        "from": "T20n1194_001:0935a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而用加持之。",
        "from": "T20n1194_001:0935a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵云半左薩曳囉瑟恥(二合此云五乳柴)表是五如來正種供養飯。",
        "from": "T20n1194_001:0935a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所用五乳柴者。",
        "from": "T20n1194_001:0935a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂尼俱律陀樹等。",
        "from": "T20n1194_001:0935a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方緣無但取不凋者及無果子柴。",
        "from": "T20n1194_001:0935a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枝條令纖細。",
        "from": "T20n1194_001:0935a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梢根搵於酥。",
        "from": "T20n1194_001:0935a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三杖或五枝。",
        "from": "T20n1194_001:0935a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或二十五枝。",
        "from": "T20n1194_001:0935a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而投於火中。",
        "from": "T20n1194_001:0935a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想供養於佛。",
        "from": "T20n1194_001:0935a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用五種穀。",
        "from": "T20n1194_001:0935a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法燒供養。",
        "from": "T20n1194_001:0935a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦金剛波羅蜜菩薩真言。",
        "from": "T20n1194_001:0935a26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先加持五穀。",
        "from": "T20n1194_001:0935a27_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1194_001:0935a27_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引)薩怛嚩(二合)嚩日哩(二合二)吽(三)加持五穀已。",
        "from": "T20n1194_001:0935a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第而供養。",
        "from": "T20n1194_001:0935a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表是食之根酥蜜乳酪等。",
        "from": "T20n1194_001:0935a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦誦於金剛波羅蜜真言。",
        "from": "T20n1194_001:0935b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先用加持之。",
        "from": "T20n1194_001:0935b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以五般粥護摩燒供養。",
        "from": "T20n1194_001:0935b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五粥者謂乳酪酥蜜沙糖乳糖粥。",
        "from": "T20n1194_001:0935b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念法波羅蜜菩薩真言加持。",
        "from": "T20n1194_001:0935b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1194_001:0935b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)達囉磨(二合)嚩日哩(二合二)紇哩以(三合三)如是加持已。",
        "from": "T20n1194_001:0935b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表是淨供養。",
        "from": "T20n1194_001:0935b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以根本波羅蜜真言。",
        "from": "T20n1194_001:0935b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持五般飯(與五粥同)真言曰。",
        "from": "T20n1194_001:0935b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)商迦哩(二)訕底迦哩(三)齲吒[寧*頁]伽吒野(四)薩嚩囉他(二合)娑馱[寧*頁](五)娑嚩(二合)賀(引六)加持五飯已。",
        "from": "T20n1194_001:0935b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表法亦同前。",
        "from": "T20n1194_001:0935b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上依法加持訖。",
        "from": "T20n1194_001:0935b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於爐上想一明王。",
        "from": "T20n1194_001:0935b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如舍利塔。",
        "from": "T20n1194_001:0935b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想諸佛皆於塔內。",
        "from": "T20n1194_001:0935b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作護摩運心供養。",
        "from": "T20n1194_001:0935b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可取火。",
        "from": "T20n1194_001:0935b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其火想隨所作。",
        "from": "T20n1194_001:0935b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部主佛種子字為火。",
        "from": "T20n1194_001:0935b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用本明加持。",
        "from": "T20n1194_001:0935b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或內想智火發大光焰。",
        "from": "T20n1194_001:0935b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或想明王遍身火焰。",
        "from": "T20n1194_001:0935b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變用燒物而作供養。",
        "from": "T20n1194_001:0935b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燃其火已。",
        "from": "T20n1194_001:0935b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以淨水及與塗香灑火作淨。",
        "from": "T20n1194_001:0935b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下於水表為淨水。",
        "from": "T20n1194_001:0935b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方用酥蜜乳酪。",
        "from": "T20n1194_001:0935b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及五柴五穀粥飯。",
        "from": "T20n1194_001:0935b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先各五投火中。",
        "from": "T20n1194_001:0935b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各別供養五如來。",
        "from": "T20n1194_001:0935b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨彼如來各念本明。",
        "from": "T20n1194_001:0935b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒物供養五如來真言曰。",
        "from": "T20n1194_001:0935b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那如來",
        "from": "T20n1194_001:0935b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)嚩日囉(二合)馱覩(二)鑁(三)阿閦如來唵(引一)惡乞蒭(二合)毘夜(二合二)吽(三)寶生如來唵(引一)囉恒曩(二合)三婆嚩(二)怛[口*洛](三合三)阿彌陀如來唵(引一)阿弭多婆(二)紇哩以(三合三)不空成就如來唵(引一)阿謨伽悉弟(二)噁(三)先想供養五佛已。",
        "from": "T20n1194_001:0935b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下水供養。",
        "from": "T20n1194_001:0935c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想與佛漱口。",
        "from": "T20n1194_001:0935c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下水真言曰。",
        "from": "T20n1194_001:0935c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)訖哩(二合)嚕娜地(二)吽(三)訖哩(二合)囉嗚娜迦(四)唵(引五)次以華供養乃擲於爐內。",
        "from": "T20n1194_001:0935c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想華安佛頂上華供養真言。",
        "from": "T20n1194_001:0935c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)薩嚩怛他誐哆(二)補瑟跛(二合)布惹(三)次用塗香獻而灑於火中。",
        "from": "T20n1194_001:0935c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想塗灑諸佛塗。",
        "from": "T20n1194_001:0935c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香供養真言曰。",
        "from": "T20n1194_001:0935c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)薩嚩怛他誐哆(二)巘馱布惹又以香供養。",
        "from": "T20n1194_001:0935c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想於佛鼻入供養諸如來。",
        "from": "T20n1194_001:0935c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香供養真言曰。",
        "from": "T20n1194_001:0935c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)薩嚩怛他誐哆(二)度播布惹(三)次振鈴念讚或誦伽陀一切臨時。",
        "from": "T20n1194_001:0935c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次燒五穀。",
        "from": "T20n1194_001:0935c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念隨所求者。",
        "from": "T20n1194_001:0935c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部主真言加持燒物。",
        "from": "T20n1194_001:0935c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如別無所求事。",
        "from": "T20n1194_001:0935c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只念法舍利真言燒物。",
        "from": "T20n1194_001:0935c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養真言曰。",
        "from": "T20n1194_001:0935c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(引一)達囉磨(二合)馱覩(二)誐羅陛(二合三)娑嚩(二合)賀燒五穀已。",
        "from": "T20n1194_001:0935c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用酥蜜乳酪各三投火中。",
        "from": "T20n1194_001:0935c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應下水運想供養一如前法。",
        "from": "T20n1194_001:0935c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以粥供養先燒乳粥。",
        "from": "T20n1194_001:0935c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下燒粥隨意。",
        "from": "T20n1194_001:0935c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當燒粥時。",
        "from": "T20n1194_001:0935c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取八所淨器。",
        "from": "T20n1194_001:0935c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或取八葉以塗香灑之。",
        "from": "T20n1194_001:0935c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用粥飯盛於淨器中。",
        "from": "T20n1194_001:0935c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以十方天真言加持。",
        "from": "T20n1194_001:0935c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於爐八方供養十方天上下二方。",
        "from": "T20n1194_001:0935c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想供養十方天。",
        "from": "T20n1194_001:0935c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明次第當說。",
        "from": "T20n1194_001:0935c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方帝釋天真言曰。",
        "from": "T20n1194_001:0935c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)印捺囉(二合)野(二)娑嚩(二合)賀東南方火天真言曰。",
        "from": "T20n1194_001:0935c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)阿仡曩(二合)曳(二)娑嚩(二合)賀南方焰摩天真言曰。",
        "from": "T20n1194_001:0936a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)焰摩野(二)娑嚩(二合)賀西南方羅剎主天真言曰。",
        "from": "T20n1194_001:0936a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)銘伽舍曩野(二)娑嚩(二合)賀西方水天真言曰。",
        "from": "T20n1194_001:0936a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)嚩嚕拏野(二)娑嚩(二合)賀西北方風天真言曰。",
        "from": "T20n1194_001:0936a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)嚩野吠(二)娑嚩(二合)賀北方毘沙門天真言曰。",
        "from": "T20n1194_001:0936a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)吠室囉末拏野(二)娑嚩(二合)賀東北方伊舍那天真言曰。",
        "from": "T20n1194_001:0936a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)伊舍娜野(二)娑嚩(二合)賀上方梵天真言曰。",
        "from": "T20n1194_001:0936a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)沒囉(二合)憾麼(二合)野(二)娑嚩(二合)賀下方地天真言曰。",
        "from": "T20n1194_001:0936a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨三滿哆沒馱南(一)必哩(二合)替尾曳(二合二)娑嚩(二合)賀(二合)賀此等十方天。",
        "from": "T20n1194_001:0936a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於爐八方。",
        "from": "T20n1194_001:0936a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置八坐位。",
        "from": "T20n1194_001:0936a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵天地天等。",
        "from": "T20n1194_001:0936a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於爐上下想。",
        "from": "T20n1194_001:0936a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然以瓶內水。",
        "from": "T20n1194_001:0936a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瀉供養飯內。",
        "from": "T20n1194_001:0936a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次用香華塗。",
        "from": "T20n1194_001:0936a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香隨位而供養。",
        "from": "T20n1194_001:0936a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各念本真言加持供養物。",
        "from": "T20n1194_001:0936a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本明誦三遍安於本方位。",
        "from": "T20n1194_001:0936a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可燒粥供養。",
        "from": "T20n1194_001:0936a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒粥已。",
        "from": "T20n1194_001:0936a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酥蜜乳酪等。",
        "from": "T20n1194_001:0936a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各三投火中。",
        "from": "T20n1194_001:0936a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下水次第一如前法。",
        "from": "T20n1194_001:0936a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以飯供養先燒於乳飯。",
        "from": "T20n1194_001:0936a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次酥後酪飯。",
        "from": "T20n1194_001:0936a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是燒飯已。",
        "from": "T20n1194_001:0936a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酥蜜乳酪等。",
        "from": "T20n1194_001:0936a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各三投火中。",
        "from": "T20n1194_001:0936a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下水次第並同前法。",
        "from": "T20n1194_001:0936b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以護摩柴。",
        "from": "T20n1194_001:0936b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梢根搵於酥投於火中。",
        "from": "T20n1194_001:0936b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用酥蜜乳酪。",
        "from": "T20n1194_001:0936b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各三投火中。",
        "from": "T20n1194_001:0936b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是次第訖然後起立。",
        "from": "T20n1194_001:0936b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執酥器并護摩匙。",
        "from": "T20n1194_001:0936b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "振鈴念誦。",
        "from": "T20n1194_001:0936b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用酥瀉於火中。",
        "from": "T20n1194_001:0936b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有隨喜人。",
        "from": "T20n1194_001:0936b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各令塗手執華候念讚瀉酥訖。",
        "from": "T20n1194_001:0936b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各擲華於爐內。",
        "from": "T20n1194_001:0936b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往火壇禮拜表供養圓滿。",
        "from": "T20n1194_001:0936b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次用淨帛揩酥覆火燒之。",
        "from": "T20n1194_001:0936b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想為佛衣如上了畢。",
        "from": "T20n1194_001:0936b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應用淨瓶繞爐下水。",
        "from": "T20n1194_001:0936b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再想漱口作淨。",
        "from": "T20n1194_001:0936b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作護摩時。",
        "from": "T20n1194_001:0936b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運想應志心。",
        "from": "T20n1194_001:0936b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養勿須忙。",
        "from": "T20n1194_001:0936b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所抄供養物。",
        "from": "T20n1194_001:0936b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如菴摩羅果子許(此方如杏子大)所說護摩壇。",
        "from": "T20n1194_001:0936b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知七佛舌。",
        "from": "T20n1194_001:0936b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱胝諸天口。",
        "from": "T20n1194_001:0936b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切供養中。",
        "from": "T20n1194_001:0936b11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩最為上。",
        "from": "T20n1194_001:0936b11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有燒不盡。",
        "from": "T20n1194_001:0936b11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五穀粥飯等。",
        "from": "T20n1194_001:0936b12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更用別飲食。",
        "from": "T20n1194_001:0936b12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸華果實。",
        "from": "T20n1194_001:0936b12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共盛一器中。",
        "from": "T20n1194_001:0936b12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用塗香灑之。",
        "from": "T20n1194_001:0936b13_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用燒香熏。",
        "from": "T20n1194_001:0936b13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作鉤召契。",
        "from": "T20n1194_001:0936b13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧耶蓮華。",
        "from": "T20n1194_001:0936b14_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及金剛縛印。",
        "from": "T20n1194_001:0936b14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下水半振鈴念加持飯真言。",
        "from": "T20n1194_001:0936b14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想供養天龍八部及火壇外諸天。",
        "from": "T20n1194_001:0936b15_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心皆供養。",
        "from": "T20n1194_001:0936b16_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是護摩供養已。",
        "from": "T20n1194_001:0936b16_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後奉送諸聖眾。",
        "from": "T20n1194_001:0936b16_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所集祕密殊勝福。",
        "from": "T20n1194_001:0936b17_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普霑一切諸含識。",
        "from": "T20n1194_001:0936b17_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥平等觀門大教王經略出護摩儀",
        "from": "T20n1194_001:0936b19_0",
        "context_with_next_sentence": false
    }
]