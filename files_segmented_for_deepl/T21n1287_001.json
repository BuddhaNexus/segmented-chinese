[
    {
        "source_sentence": "大黑天神法",
        "from": "T21n1287_001:0355b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉祥寺神愷記",
        "from": "T21n1287_001:0355b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大黑天神者。",
        "from": "T21n1287_001:0355b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大自在天變身也。",
        "from": "T21n1287_001:0355b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五天竺並吾朝諸伽藍等皆所安置也。",
        "from": "T21n1287_001:0355b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人云。",
        "from": "T21n1287_001:0355b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大黑天神者。",
        "from": "T21n1287_001:0355b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅牢地天化身也。",
        "from": "T21n1287_001:0355b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伽藍安之。",
        "from": "T21n1287_001:0355b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日所炊飯上分供養此天。",
        "from": "T21n1287_001:0355b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓夢中語詞之中曰。",
        "from": "T21n1287_001:0355b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若吾安置伽藍。",
        "from": "T21n1287_001:0355b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日敬供者。",
        "from": "T21n1287_001:0355b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾寺中令住眾多僧。",
        "from": "T21n1287_001:0355b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日必養千人之眾。",
        "from": "T21n1287_001:0355b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至人宅亦爾也。",
        "from": "T21n1287_001:0355b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人三年專心供吾者。",
        "from": "T21n1287_001:0355b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾必此來。",
        "from": "T21n1287_001:0355b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供人授與世間富貴乃至官位爵祿。",
        "from": "T21n1287_001:0355b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應惟悉與焉。",
        "from": "T21n1287_001:0355b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾體作五尺。",
        "from": "T21n1287_001:0355b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若三尺若二尺五寸亦得通免之。",
        "from": "T21n1287_001:0355b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "膚色悉作黑色。",
        "from": "T21n1287_001:0355b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭令冠烏帽子悉黑色也。",
        "from": "T21n1287_001:0355b21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令著袴驅褰不垂。",
        "from": "T21n1287_001:0355b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令著狩衣。",
        "from": "T21n1287_001:0355b22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裙短袖細。",
        "from": "T21n1287_001:0355b22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作拳令收右腰。",
        "from": "T21n1287_001:0355b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手令持大袋。",
        "from": "T21n1287_001:0355b23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從背令懸肩上其袋之色為鼠毛色。",
        "from": "T21n1287_001:0355b23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其垂下裎餘臀上。",
        "from": "T21n1287_001:0355b24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是作畢。",
        "from": "T21n1287_001:0355b25_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居大眾食屋禮供者。",
        "from": "T21n1287_001:0355b25_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堂屋房舍必自然之榮。",
        "from": "T21n1287_001:0355b25_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聚集涌出。",
        "from": "T21n1287_001:0355b26_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若人常持念吾呪。",
        "from": "T21n1287_001:0355b26_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四季大備餚饍酒羹飯食乃至百味。",
        "from": "T21n1287_001:0355b27_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五更時不知眾多人供吾者。",
        "from": "T21n1287_001:0355b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定與富。",
        "from": "T21n1287_001:0355b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其呪曰。",
        "from": "T21n1287_001:0355b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵密止密止舍婆隷多羅羯帝娑婆訶",
        "from": "T21n1287_001:0355c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印者。",
        "from": "T21n1287_001:0355c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內縛舒二地二水。",
        "from": "T21n1287_001:0355c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來去是也。",
        "from": "T21n1287_001:0355c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養印者用常途法。",
        "from": "T21n1287_001:0355c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮供人者。",
        "from": "T21n1287_001:0355c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必於此神成父母之想。",
        "from": "T21n1287_001:0355c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三寶成外護。",
        "from": "T21n1287_001:0355c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於眾人成父母故也。",
        "from": "T21n1287_001:0355c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余久聞天竺土風並吾當朝土風。",
        "from": "T21n1287_001:0355c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸寺安此天莫非豐饒。",
        "from": "T21n1287_001:0355c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因之為斷後輩之疑。",
        "from": "T21n1287_001:0355c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以野客夢事引尋貽之焉。",
        "from": "T21n1287_001:0355c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大黑天神法　師云。",
        "from": "T21n1287_001:0355c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此最祕密也。",
        "from": "T21n1287_001:0355c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不入室弟子不可傳受。",
        "from": "T21n1287_001:0355c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千金莫傳努力讚(天讚)。",
        "from": "T21n1287_001:0355c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種子。",
        "from": "T21n1287_001:0355c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大黑天神者。",
        "from": "T21n1287_001:0355c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胎藏界梵號云摩訶迦羅天。",
        "from": "T21n1287_001:0355c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦云大黑天神。",
        "from": "T21n1287_001:0355c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用普印。",
        "from": "T21n1287_001:0355c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩耶形劍。",
        "from": "T21n1287_001:0355c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青色三面六臂。",
        "from": "T21n1287_001:0355c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前左右手橫執劍左次手執人頭(取髻提也)右次手執羊牝。",
        "from": "T21n1287_001:0355c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次左右象皮張背後。",
        "from": "T21n1287_001:0355c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以髑髏為瓔珞也。",
        "from": "T21n1287_001:0355c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故本云黑淺色也。",
        "from": "T21n1287_001:0355c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王經良賁疏云。",
        "from": "T21n1287_001:0355c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言塜間者所住處也。",
        "from": "T21n1287_001:0355c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言摩訶者。",
        "from": "T21n1287_001:0355c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此翻云大。",
        "from": "T21n1287_001:0355c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言迦羅者。",
        "from": "T21n1287_001:0355c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云黑天也。",
        "from": "T21n1287_001:0355c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上句梵語。",
        "from": "T21n1287_001:0355c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下句唐言。",
        "from": "T21n1287_001:0355c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大黑天神鬪戰神也。",
        "from": "T21n1287_001:0355c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若禮彼神。",
        "from": "T21n1287_001:0355c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增其威德。",
        "from": "T21n1287_001:0355c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉事皆勝。",
        "from": "T21n1287_001:0355c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故嚮祀也。",
        "from": "T21n1287_001:0355c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以知者。",
        "from": "T21n1287_001:0355c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏引別梵筴云。",
        "from": "T21n1287_001:0356a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孔雀王經說。",
        "from": "T21n1287_001:0356a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏尸尼國國城東。",
        "from": "T21n1287_001:0356a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有林名奢摩奢那。",
        "from": "T21n1287_001:0356a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云尸林。",
        "from": "T21n1287_001:0356a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其林縱橫滿一由旬。",
        "from": "T21n1287_001:0356a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大黑天神。",
        "from": "T21n1287_001:0356a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是摩醯首羅變化之身。",
        "from": "T21n1287_001:0356a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸鬼神無量眷屬。",
        "from": "T21n1287_001:0356a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於夜間遊行林中。",
        "from": "T21n1287_001:0356a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大神力。",
        "from": "T21n1287_001:0356a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多諸珍寶。",
        "from": "T21n1287_001:0356a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有隱形藥有長年藥。",
        "from": "T21n1287_001:0356a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊行飛空。",
        "from": "T21n1287_001:0356a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸幻術藥與人貿易。",
        "from": "T21n1287_001:0356a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯取生人血肉。",
        "from": "T21n1287_001:0356a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先約斤兩而貿藥等。",
        "from": "T21n1287_001:0356a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲往。",
        "from": "T21n1287_001:0356a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陀羅尼加持其身。",
        "from": "T21n1287_001:0356a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然往貿易。",
        "from": "T21n1287_001:0356a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不加持。",
        "from": "T21n1287_001:0356a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸鬼神。",
        "from": "T21n1287_001:0356a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃自隱形盜人血肉。",
        "from": "T21n1287_001:0356a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令減斤兩。",
        "from": "T21n1287_001:0356a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即取彼人身上血肉。",
        "from": "T21n1287_001:0356a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨取隨盡。",
        "from": "T21n1287_001:0356a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不充先約。",
        "from": "T21n1287_001:0356a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至取盡一人血肉。",
        "from": "T21n1287_001:0356a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斤兩不充藥不可得。",
        "from": "T21n1287_001:0356a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若加持者貿得寶貝及諸藥等。",
        "from": "T21n1287_001:0356a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所為皆得成就。",
        "from": "T21n1287_001:0356a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若嚮祀者。",
        "from": "T21n1287_001:0356a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯人血肉也。",
        "from": "T21n1287_001:0356a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有大力即加護人。",
        "from": "T21n1287_001:0356a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作勇猛鬪戰等法皆得勝也。",
        "from": "T21n1287_001:0356a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故大黑天神即鬪戰神也。",
        "from": "T21n1287_001:0356a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此天即七母天為眷屬(云云)有七姊妹者。",
        "from": "T21n1287_001:0356a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一左閟拏。",
        "from": "T21n1287_001:0356a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二嬌吠哩。",
        "from": "T21n1287_001:0356a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三吠瑟拏微。",
        "from": "T21n1287_001:0356a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四嬌麼哩。",
        "from": "T21n1287_001:0356a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五印[打-丁+荼]里。",
        "from": "T21n1287_001:0356a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六勞[打-丁+荼]里。",
        "from": "T21n1287_001:0356a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七末羅呬弭。",
        "from": "T21n1287_001:0356a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是七名皆是真言也。",
        "from": "T21n1287_001:0356a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大日經疏云。",
        "from": "T21n1287_001:0356a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荼吉尼真言。",
        "from": "T21n1287_001:0356a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是世間有造此法術者。",
        "from": "T21n1287_001:0356a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦自在呪術能知人欲命終者。",
        "from": "T21n1287_001:0356a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六月即知之。",
        "from": "T21n1287_001:0356a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知已。",
        "from": "T21n1287_001:0356a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作法取其心食之。",
        "from": "T21n1287_001:0356a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以爾者人身中有黃。",
        "from": "T21n1287_001:0356a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂人黃猶牛有黃也。",
        "from": "T21n1287_001:0356a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得食者能得極大成就。",
        "from": "T21n1287_001:0356a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日周遊四域。",
        "from": "T21n1287_001:0356a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意所為皆得。",
        "from": "T21n1287_001:0356a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能種種治人。",
        "from": "T21n1287_001:0356a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有嫌者以術治之極令病苦。",
        "from": "T21n1287_001:0356a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然彼法不得殺人。",
        "from": "T21n1287_001:0356a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要依自計方術。",
        "from": "T21n1287_001:0356a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人欲死者去。",
        "from": "T21n1287_001:0356a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六月即知之。",
        "from": "T21n1287_001:0356a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知已以術取其心。",
        "from": "T21n1287_001:0356a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖取其心然有法術。",
        "from": "T21n1287_001:0356a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要以餘物代之。",
        "from": "T21n1287_001:0356a27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人命亦不終。",
        "from": "T21n1287_001:0356a27_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至合死時方壞也。",
        "from": "T21n1287_001:0356a28_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大都是夜叉大自在。",
        "from": "T21n1287_001:0356a28_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世人所說大極。",
        "from": "T21n1287_001:0356a29_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屬摩訶迦羅。",
        "from": "T21n1287_001:0356a29_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂大黑神也。",
        "from": "T21n1287_001:0356a29_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那以降伏三世法門。",
        "from": "T21n1287_001:0356b01_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲除彼故化作大黑神。",
        "from": "T21n1287_001:0356b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過於彼無量示現。",
        "from": "T21n1287_001:0356b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以灰塗身在曠野中。",
        "from": "T21n1287_001:0356b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以術悉召一切法成就乘空履水皆無礙諸荼吉尼而訶責之。",
        "from": "T21n1287_001:0356b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶汝常噉人故。",
        "from": "T21n1287_001:0356b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦當食汝。",
        "from": "T21n1287_001:0356b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即吞噉之。",
        "from": "T21n1287_001:0356b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然不令死彼。",
        "from": "T21n1287_001:0356b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏已放之悉令斷肉。",
        "from": "T21n1287_001:0356b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼白佛言。",
        "from": "T21n1287_001:0356b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今悉食肉得存。",
        "from": "T21n1287_001:0356b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今如何自濟。",
        "from": "T21n1287_001:0356b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言聽汝食死人心。",
        "from": "T21n1287_001:0356b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼言人欲死時。",
        "from": "T21n1287_001:0356b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天夜叉等知彼命盡。",
        "from": "T21n1287_001:0356b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爭來欲食。",
        "from": "T21n1287_001:0356b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我云何得之。",
        "from": "T21n1287_001:0356b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言為汝說真言法及印。",
        "from": "T21n1287_001:0356b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六月未死即能知之。",
        "from": "T21n1287_001:0356b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知已。",
        "from": "T21n1287_001:0356b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以法加護勿令他畏得損。",
        "from": "T21n1287_001:0356b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至命盡時聽汝取食也。",
        "from": "T21n1287_001:0356b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是稍引令得入道故。",
        "from": "T21n1287_001:0356b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此真言訶唎(二合訶定行利垢)訶(行除彼邪術之垢也)瑜祇經疏云。",
        "from": "T21n1287_001:0356b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽迦羅(名降三世降伏義)迦羅(又云黑闇)大日經疏云摩訶迦羅大黑天神。",
        "from": "T21n1287_001:0356b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云大闇夜天。",
        "from": "T21n1287_001:0356b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以迦羅翻黑闇。",
        "from": "T21n1287_001:0356b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王疏云摩訶迦羅神(云云)　摩訶迦羅用普印　唵摩訶迦羅野娑婆(二合)賀(引)　南海傳云。",
        "from": "T21n1287_001:0356b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復西方諸大寺處。",
        "from": "T21n1287_001:0356b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸於食厨柱側。",
        "from": "T21n1287_001:0356b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在大庫門前彫木表形。",
        "from": "T21n1287_001:0356b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或二尺三尺為神王狀。",
        "from": "T21n1287_001:0356b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐把金囊却踞小床。",
        "from": "T21n1287_001:0356b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一脚垂地每將油拭黑色為形。",
        "from": "T21n1287_001:0356b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號曰莫訶呵羅。",
        "from": "T21n1287_001:0356b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即大黑神也。",
        "from": "T21n1287_001:0356b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古代相承云。",
        "from": "T21n1287_001:0356b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大天之部屬。",
        "from": "T21n1287_001:0356b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性愛三寶護持五眾。",
        "from": "T21n1287_001:0356b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使無損秏。",
        "from": "T21n1287_001:0356b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求者稱情。",
        "from": "T21n1287_001:0356b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但至食時。",
        "from": "T21n1287_001:0356b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厨家每薦香火。",
        "from": "T21n1287_001:0356b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有飲食隨列於前。",
        "from": "T21n1287_001:0356b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾親見說大涅槃處般禪那寺。",
        "from": "T21n1287_001:0356b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每常僧食一百有餘。",
        "from": "T21n1287_001:0356b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春秋二時。",
        "from": "T21n1287_001:0356b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮拜之際不期而至。",
        "from": "T21n1287_001:0356b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧徒五百臨中忽來。",
        "from": "T21n1287_001:0356b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正到中時無宜更煮。",
        "from": "T21n1287_001:0356b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其知事人告厨家曰。",
        "from": "T21n1287_001:0356b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有斯倉卒事欲如何。",
        "from": "T21n1287_001:0356b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時有一淨人老母而告之曰。",
        "from": "T21n1287_001:0356b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此乃常事無勞見憂。",
        "from": "T21n1287_001:0356b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂乃多然香火盛陳祭食。",
        "from": "T21n1287_001:0356b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告黑神曰。",
        "from": "T21n1287_001:0356b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聖涅槃爾徒尚在。",
        "from": "T21n1287_001:0356c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方僧至為禮於聖蹤。",
        "from": "T21n1287_001:0356c01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食供養勿令闕乏。",
        "from": "T21n1287_001:0356c02_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是仁之力幸可知時。",
        "from": "T21n1287_001:0356c02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋即總命大眾令坐。",
        "from": "T21n1287_001:0356c03_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以寺常食次第行之。",
        "from": "T21n1287_001:0356c03_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾咸足。",
        "from": "T21n1287_001:0356c04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餐所長還如常日。",
        "from": "T21n1287_001:0356c04_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "咸皆唱善讚天神之力。",
        "from": "T21n1287_001:0356c04_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親行禮覲。",
        "from": "T21n1287_001:0356c05_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故覩黑神。",
        "from": "T21n1287_001:0356c05_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見在其前食成大聚。",
        "from": "T21n1287_001:0356c05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問其何意報此所由。",
        "from": "T21n1287_001:0356c06_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淮北雖復先無江南多有置處。",
        "from": "T21n1287_001:0356c06_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求者効驗。",
        "from": "T21n1287_001:0356c07_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神道非虛。",
        "from": "T21n1287_001:0356c07_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺寺目真隣陀龍。",
        "from": "T21n1287_001:0356c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦同斯異矣。",
        "from": "T21n1287_001:0356c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵密止密止舍婆隷多羅羯帝訶娑婆訶(引)唵摩訶迦羅耶娑婆訶口傳云常途法者十八道　口傳云。",
        "from": "T21n1287_001:0356c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王經云塚間摩訶迦羅大黑天神。",
        "from": "T21n1287_001:0356c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理趣釋云七母女天者是摩訶迦羅天眷屬。",
        "from": "T21n1287_001:0356c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可居東北方。",
        "from": "T21n1287_001:0356c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最祕最祕。",
        "from": "T21n1287_001:0356c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師云。",
        "from": "T21n1287_001:0356c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法最極祕密法也。",
        "from": "T21n1287_001:0356c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不入室乃無名薄之人。",
        "from": "T21n1287_001:0356c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可傳受。",
        "from": "T21n1287_001:0356c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫傳千金努努　先可儲供一面　次可儲少少之菓　次備香水一杯(可加散杖)次塗香一杯花鬘一杯燒香一杯酒一杯(若無者用茶)次洗米一杯(若飯)銀錢一捧(若加用幣帛用普供養明)次於房中洗手嗽口次護身(淨三業三都被甲如十八道)次入堂(持珠杵)次禮佛著座　次塗香塗手　次加持香水(用辦事印明)次灑淨供物次加持飯食印真言　左手作拳押腰。",
        "from": "T21n1287_001:0356c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手五指直立。",
        "from": "T21n1287_001:0357a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈中指節。",
        "from": "T21n1287_001:0357a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以空指置火甲。",
        "from": "T21n1287_001:0357a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每誦真言摩中指甲上兩三遍。",
        "from": "T21n1287_001:0357a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘舒之。",
        "from": "T21n1287_001:0357a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後以大指頭指三遍。",
        "from": "T21n1287_001:0357a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指舒之。",
        "from": "T21n1287_001:0357a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1287_001:0357a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩　莫　薩嚩　怛　他(引)　蘖　多(引)　嚩　路枳　帝　唵　三　婆　羅　三　婆　羅　吽次施甘露印明　作施無畏印以右手竪展五指。",
        "from": "T21n1287_001:0357a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直上即是。",
        "from": "T21n1287_001:0357a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1287_001:0357a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩　莫　蘇嚕(二合)　跛　野　怛　他　蘖　多(引)野　怛　儞也(引)　他　唵(引)　蘇嚕(二合)　蘇嚕(二合)鉢羅(二合)　蘇嚕(二合)　鉢羅(二合)　蘇嚕(二合)娑嚩(二合)　賀(引)次鑁字心水輪觀　先作施無畏印。",
        "from": "T21n1287_001:0357a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手掌心觀字誦字。",
        "from": "T21n1287_001:0357a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此呪一七遍。",
        "from": "T21n1287_001:0357a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即展開五指。",
        "from": "T21n1287_001:0357a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向下臨食器中觀。",
        "from": "T21n1287_001:0357a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1287_001:0357a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩　莫　三　曼　多　沒　馱　南　鑁次勸請(用堅實合掌)。",
        "from": "T21n1287_001:0357a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　至心謹請　摩訶迦羅　大黑天神　與諸眷屬　來降於此　受此供養(三遍)　真言曰。",
        "from": "T21n1287_001:0357b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　摩　訶　迦　羅　耶　曳　醯　呬(三反普印明)以二空招之(三反)　次閼伽(取散杖誦闕伽明於座前灑之三遍)　次華座(取一房花誦花座明置於座所或亦用印明)　次塗香　次華鬘　次燒香　次飲食(先菓子次酒次飲食)　次燈明　次銀錢(或加用幣帛)次普供養(如十八道也)　次讚印(用普諸天贊)　次諦緣度(用普印)　次心經(用普印)　次隨意祈願　次根本印真言(同印)　次念誦(極少百遍)　次閼伽(如先)　次啟白(用普印)所設供養　可笑麁惡　攀緣覺觀　多不如法　惱亂冥眾　唯願慈悲　布施歡喜次禮拜　次撥遣　右手作拳。",
        "from": "T21n1287_001:0357b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指捻頭指。",
        "from": "T21n1287_001:0357b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰掌彈指作聲七遍是也。",
        "from": "T21n1287_001:0357b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1287_001:0357b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　拔　折羅(二合)　母　乞叉(二合)　穆次護身(三部被甲如先)　次著座諸天讚阿　演　都　泥　縛　左　誐　素羅　緊　那　黎捺羅(二合)　娑　羯　羅　娜　臾　鉢羅(二合)　縛　羅達　麼　枳里(二合)　多　地　伽　羅　尾　達　麼左　鉢羅(二合)　娑　麼　操　企也(二合)　儞　銘　多部　多　銘　多　鉢羅(二合)　迦　捨　夜　怛　儞　賀室羅(二合)　摩　拏　也　馱　[牟*含]大黑天神法(終)切云褰(舉奠反衣後也)裙(欺文反裳也)和名云臀(從軍反訓云井左良比)亦云裙(音裙訓云古呂毛乃須祖亦云古呂毛乃惠利)。",
        "from": "T21n1287_001:0357b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承安三年二月十八日。",
        "from": "T21n1287_001:0357c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於醍醐寺勝俱胝院之東坊。",
        "from": "T21n1287_001:0357c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二箇日書寫了。",
        "from": "T21n1287_001:0357c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永正三年丙寅二月二日。",
        "from": "T21n1287_001:0357c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於上醍醐寺寂靜院。",
        "from": "T21n1287_001:0357c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "谷行樹院澄惠法印傳授畢　快瑜。",
        "from": "T21n1287_001:0357c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明和元年甲申仲秋二日。",
        "from": "T21n1287_001:0357c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以或古本謄寫一挍了。",
        "from": "T21n1287_001:0357c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　　沙門智好享和改元秋八月後五日。",
        "from": "T21n1287_001:0357c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集三五本校之。",
        "from": "T21n1287_001:0357c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以授工壽梓。",
        "from": "T21n1287_001:0357c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人知天尊之靈驗　又有八臂天希麟音義云。",
        "from": "T21n1287_001:0357c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云摩訶迦羅大黑天神唐梵雙舉也。",
        "from": "T21n1287_001:0358a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此神青黑雲色。",
        "from": "T21n1287_001:0358a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽無量歲。",
        "from": "T21n1287_001:0358a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八臂各執異仗。",
        "from": "T21n1287_001:0358a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貫穿髑髏以為瓔珞。",
        "from": "T21n1287_001:0358a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作天忿怒形。",
        "from": "T21n1287_001:0358a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "足下有地神女天以兩手承足者也。",
        "from": "T21n1287_001:0358a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　豐山長谷總持院勤息快道記　一校加筆畢　　　　　　　　慈順",
        "from": "T21n1287_001:0358a05_9",
        "context_with_next_sentence": false
    }
]