[
    {
        "source_sentence": "大方廣佛華嚴經疏卷第七十四(入第四十五經)清涼山沙門　澄觀　述晉水沙門　(淨源)　錄疏注經○阿僧祇品第三十△初來意有二。",
        "from": "X07n0234_074:0776a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一通辨者。",
        "from": "X07n0234_074:0776a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂前三品別答前問。",
        "from": "X07n0234_074:0776a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下三品總明等覺。",
        "from": "X07n0234_074:0776a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝德深奧故二別辨者。",
        "from": "X07n0234_074:0776a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前既智圓證極。",
        "from": "X07n0234_074:0776a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品校量行德難思。",
        "from": "X07n0234_074:0776a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故次來也。",
        "from": "X07n0234_074:0776a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又難思佛德。",
        "from": "X07n0234_074:0776a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩盡窮故。",
        "from": "X07n0234_074:0776a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為遠答。",
        "from": "X07n0234_074:0776a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變化海故。",
        "from": "X07n0234_074:0776a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下偈廣明變化大用。",
        "from": "X07n0234_074:0776a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即其意也。",
        "from": "X07n0234_074:0776a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又通顯一部之數量故。",
        "from": "X07n0234_074:0776a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二釋名者。",
        "from": "X07n0234_074:0776a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿之言無。",
        "from": "X07n0234_074:0776a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧祇曰。",
        "from": "X07n0234_074:0776a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數全帶數名。",
        "from": "X07n0234_074:0776a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若晉本云。",
        "from": "X07n0234_074:0776a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心王菩薩問阿僧祇品。",
        "from": "X07n0234_074:0776a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼能問人。",
        "from": "X07n0234_074:0776a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即人法雙舉。",
        "from": "X07n0234_074:0776a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及菩薩所問之筭數。",
        "from": "X07n0234_074:0776a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵本同此。",
        "from": "X07n0234_074:0776a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然僧祇是十大數之創首。",
        "from": "X07n0234_074:0776a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經論多用。",
        "from": "X07n0234_074:0776a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以標名。",
        "from": "X07n0234_074:0776a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦顯此數。",
        "from": "X07n0234_074:0776a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即離數故。",
        "from": "X07n0234_074:0776a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄無數標名。",
        "from": "X07n0234_074:0776a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三宗趣者。",
        "from": "X07n0234_074:0776a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寄數顯德。",
        "from": "X07n0234_074:0776a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分齊為宗。",
        "from": "X07n0234_074:0776a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令知普賢及知諸佛離數。",
        "from": "X07n0234_074:0776a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重重無盡為趣。",
        "from": "X07n0234_074:0776a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四釋經文。",
        "from": "X07n0234_074:0776a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下三品總顯深奧。",
        "from": "X07n0234_074:0776a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為三別。",
        "from": "X07n0234_074:0776a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品明勝德無數。",
        "from": "X07n0234_074:0776a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次品明盡一切時。",
        "from": "X07n0234_074:0776a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後品明徧一切處。",
        "from": "X07n0234_074:0776a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此三品。",
        "from": "X07n0234_074:0776a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初一通明佛菩薩德。",
        "from": "X07n0234_074:0776a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次品正顯佛之勝德。",
        "from": "X07n0234_074:0776a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼明菩薩。",
        "from": "X07n0234_074:0776a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後品唯明菩薩之德。",
        "from": "X07n0234_074:0776a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以爾者。",
        "from": "X07n0234_074:0776a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是等覺亦名佛故。",
        "from": "X07n0234_074:0776a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "位後普賢是佛菩薩故。",
        "from": "X07n0234_074:0776a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今初一品。",
        "from": "X07n0234_074:0776a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文分為二。",
        "from": "X07n0234_074:0776a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先問二。",
        "from": "X07n0234_074:0776a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初牒佛所說。",
        "from": "X07n0234_074:0776a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時心王菩薩。",
        "from": "X07n0234_074:0776a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以心王問者表數。",
        "from": "X07n0234_074:0776a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離心數與非數。",
        "from": "X07n0234_074:0776a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆自在故。",
        "from": "X07n0234_074:0776a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又顯此數。",
        "from": "X07n0234_074:0776b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統收前後。",
        "from": "X07n0234_074:0776b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨超勝故。",
        "from": "X07n0234_074:0776b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊諸佛如來(至)不可說不可說。",
        "from": "X07n0234_074:0776b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以偏問十者。",
        "from": "X07n0234_074:0776b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉後攝初。",
        "from": "X07n0234_074:0776b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯無盡故。",
        "from": "X07n0234_074:0776b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後文中多用此故。",
        "from": "X07n0234_074:0776b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故後文云。",
        "from": "X07n0234_074:0776b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來演說。",
        "from": "X07n0234_074:0776b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但問本數。",
        "from": "X07n0234_074:0776b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已攝諸轉。",
        "from": "X07n0234_074:0776b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正明諮問。",
        "from": "X07n0234_074:0776b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊云何阿僧祇乃至不可說不可說耶。",
        "from": "X07n0234_074:0776b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二答四。",
        "from": "X07n0234_074:0776b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初讚問成益。",
        "from": "X07n0234_074:0776b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告心王菩薩言善哉善哉(至)而問如來應正等覺。",
        "from": "X07n0234_074:0776b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令入佛所知數者。",
        "from": "X07n0234_074:0776b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是圓教所明。",
        "from": "X07n0234_074:0776b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深廣無涯。",
        "from": "X07n0234_074:0776b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛方測。",
        "from": "X07n0234_074:0776b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不同凡小之所能知。",
        "from": "X07n0234_074:0776b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如黃帝筭法。",
        "from": "X07n0234_074:0776b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有二十三數。",
        "from": "X07n0234_074:0776b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從一二。",
        "from": "X07n0234_074:0776b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終至正載。",
        "from": "X07n0234_074:0776b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已說天地。",
        "from": "X07n0234_074:0776b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不容小乘六十已至無數。",
        "from": "X07n0234_074:0776b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此有百二十四倍。",
        "from": "X07n0234_074:0776b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍變之故。",
        "from": "X07n0234_074:0776b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非餘測故。",
        "from": "X07n0234_074:0776b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數終極寄不可說。",
        "from": "X07n0234_074:0776b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復偈初更積不可說。",
        "from": "X07n0234_074:0776b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷諸塵剎。",
        "from": "X07n0234_074:0776b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以顯無盡。",
        "from": "X07n0234_074:0776b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以佛自答者。",
        "from": "X07n0234_074:0776b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表難思故。",
        "from": "X07n0234_074:0776b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又明此品統語因位終德。",
        "from": "X07n0234_074:0776b14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故佛說之。",
        "from": "X07n0234_074:0776b15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二誡聽許說。",
        "from": "X07n0234_074:0776b15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子諦聽諦聽善思念之當為汝說。",
        "from": "X07n0234_074:0776b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三敬受尊命。",
        "from": "X07n0234_074:0776b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時心王菩薩唯然受教。",
        "from": "X07n0234_074:0776b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四正答所疑二。",
        "from": "X07n0234_074:0776b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初長行明能數之數廣多。",
        "from": "X07n0234_074:0776b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善男子一百洛叉(至)為一不可說不可說轉。",
        "from": "X07n0234_074:0776b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問乃舉後難知。",
        "from": "X07n0234_074:0776b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答則始終具說。",
        "from": "X07n0234_074:0776b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初言一百洛叉為一俱胝者。",
        "from": "X07n0234_074:0776b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中等數洛叉是萬。",
        "from": "X07n0234_074:0776b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱胝是億故。",
        "from": "X07n0234_074:0776b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明覺品云過一億。",
        "from": "X07n0234_074:0776b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵本皆云俱胝故。",
        "from": "X07n0234_074:0776b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依俱舍。",
        "from": "X07n0234_074:0776b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以洛叉為億。",
        "from": "X07n0234_074:0776b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則俱胝當兆也。",
        "from": "X07n0234_074:0776b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若兼取一十百千萬等下等數法。",
        "from": "X07n0234_074:0776b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則通有百三十七數。",
        "from": "X07n0234_074:0776c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由前易故。",
        "from": "X07n0234_074:0776c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略不說之。",
        "from": "X07n0234_074:0776c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱胝已下並是上等數法。",
        "from": "X07n0234_074:0776c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倍倍變故。",
        "from": "X07n0234_074:0776c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘如光明覺品中說。",
        "from": "X07n0234_074:0776c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中多存梵音。",
        "from": "X07n0234_074:0776c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是數名更無別理。",
        "from": "X07n0234_074:0776c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末後云。",
        "from": "X07n0234_074:0776c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此又不可說不可說者。",
        "from": "X07n0234_074:0776c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若類前具牒。",
        "from": "X07n0234_074:0776c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便有四箇不可說字。",
        "from": "X07n0234_074:0776c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故譯家云。",
        "from": "X07n0234_074:0776c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此又二字替一不可說不可說。",
        "from": "X07n0234_074:0776c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為譯之巧。",
        "from": "X07n0234_074:0776c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二偈頌。",
        "from": "X07n0234_074:0776c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯所數之德無盡。",
        "from": "X07n0234_074:0776c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一百二十偈。",
        "from": "X07n0234_074:0776c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大分為二。",
        "from": "X07n0234_074:0776c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初六偈明普賢德。",
        "from": "X07n0234_074:0776c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣說不可盡二。",
        "from": "X07n0234_074:0776c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初四偈半明能數多。",
        "from": "X07n0234_074:0776c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊為心王菩薩而說頌言。",
        "from": "X07n0234_074:0776c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可言說不可說(至)一塵十萬不可說。",
        "from": "X07n0234_074:0776c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積數自有十重。",
        "from": "X07n0234_074:0776c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以顯無盡。",
        "from": "X07n0234_074:0776c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知上至不可說轉。",
        "from": "X07n0234_074:0776c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚約順機。",
        "from": "X07n0234_074:0776c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據佛所知。",
        "from": "X07n0234_074:0776c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無盡故。",
        "from": "X07n0234_074:0776c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言十重者。",
        "from": "X07n0234_074:0776c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一初句積不可說至不可說。",
        "from": "X07n0234_074:0776c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此應積最後不可說不可說轉。",
        "from": "X07n0234_074:0776c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而但積不可說者。",
        "from": "X07n0234_074:0776c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有二義故。",
        "from": "X07n0234_074:0776c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一取言易故。",
        "from": "X07n0234_074:0776c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下偈多用故。",
        "from": "X07n0234_074:0776c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二表言所不及之數故。",
        "from": "X07n0234_074:0776c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次三句將上所積充滿一切不可說初句。",
        "from": "X07n0234_074:0776c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標後二句釋。",
        "from": "X07n0234_074:0776c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂何者是一切不可說。",
        "from": "X07n0234_074:0776c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋云不可說劫中說不盡者。",
        "from": "X07n0234_074:0776c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三半偈將上諸不可說一一是一剎皆碎為塵。",
        "from": "X07n0234_074:0776c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四半偈即前一一塵有不可說剎。",
        "from": "X07n0234_074:0776c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五有半偈。",
        "from": "X07n0234_074:0776c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將前諸塵中剎一念。",
        "from": "X07n0234_074:0776c19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徧碎為塵。",
        "from": "X07n0234_074:0776c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六有半偈。",
        "from": "X07n0234_074:0776c20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念碎塵。",
        "from": "X07n0234_074:0776c20_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復盡多劫。",
        "from": "X07n0234_074:0776c20_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七有一句。",
        "from": "X07n0234_074:0776c20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明前所碎塵。",
        "from": "X07n0234_074:0776c21_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有多剎。",
        "from": "X07n0234_074:0776c21_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八有一句。",
        "from": "X07n0234_074:0776c21_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此多剎。",
        "from": "X07n0234_074:0776c21_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復碎為塵。",
        "from": "X07n0234_074:0776c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九有半偈。",
        "from": "X07n0234_074:0776c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以多筭數。",
        "from": "X07n0234_074:0776c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經於多劫。",
        "from": "X07n0234_074:0776c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數上諸塵。",
        "from": "X07n0234_074:0776c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云如是數。",
        "from": "X07n0234_074:0776c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十以上諸塵數劫。",
        "from": "X07n0234_074:0776c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一塵有十萬箇不可說劫。",
        "from": "X07n0234_074:0776c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是重重無盡無盡。",
        "from": "X07n0234_074:0776c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二一偈半顯所數廣。",
        "from": "X07n0234_074:0776c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾劫稱讚一普賢(至)如是乃至徧法界。",
        "from": "X07n0234_074:0777a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略舉三重。",
        "from": "X07n0234_074:0777a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一將上諸劫。",
        "from": "X07n0234_074:0777a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚一普賢之德不盡。",
        "from": "X07n0234_074:0777a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二況一塵中有多普賢。",
        "from": "X07n0234_074:0777a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三況徧法界塵。",
        "from": "X07n0234_074:0777a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有多矣。",
        "from": "X07n0234_074:0777a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知普賢德無盡故。",
        "from": "X07n0234_074:0777a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不以稱性之心思之。",
        "from": "X07n0234_074:0777a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心惑狂亂。",
        "from": "X07n0234_074:0777a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有一百一十四偈。",
        "from": "X07n0234_074:0777a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明佛德深廣普賢窮究。",
        "from": "X07n0234_074:0777a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即廣顯變化之相。",
        "from": "X07n0234_074:0777a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_074:0777a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初明果德無礙因位善窮。",
        "from": "X07n0234_074:0777a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明果德深廣因能趣入。",
        "from": "X07n0234_074:0777a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中分二。",
        "from": "X07n0234_074:0777a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初果法無礙二。",
        "from": "X07n0234_074:0777a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初三偈依報自在。",
        "from": "X07n0234_074:0777a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一毛端處所有剎(至)種種奇妙不可說。",
        "from": "X07n0234_074:0777a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二明依正融攝。",
        "from": "X07n0234_074:0777a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即入自在。",
        "from": "X07n0234_074:0777a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中五。",
        "from": "X07n0234_074:0777a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初依中現正。",
        "from": "X07n0234_074:0777a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼一一毛端處(至)咸放光明不可說。",
        "from": "X07n0234_074:0777a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有十一偈半。",
        "from": "X07n0234_074:0777a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明正中現依。",
        "from": "X07n0234_074:0777a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_074:0777a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初現蓮華光明。",
        "from": "X07n0234_074:0777a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼一一光明中(至)不可言說不可說。",
        "from": "X07n0234_074:0777a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有二偈半。",
        "from": "X07n0234_074:0777a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現淨土之用。",
        "from": "X07n0234_074:0777a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼如須彌一妙寶(至)皆出光明不可說。",
        "from": "X07n0234_074:0777a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有五偈。",
        "from": "X07n0234_074:0777a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依中現正說法調伏。",
        "from": "X07n0234_074:0777a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光中現佛不可說(至)調伏眾生不可說。",
        "from": "X07n0234_074:0777a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有二偈。",
        "from": "X07n0234_074:0777a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明現時常住。",
        "from": "X07n0234_074:0777a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復於一毛端處(至)復現於化不可說。",
        "from": "X07n0234_074:0777a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五有九偈半。",
        "from": "X07n0234_074:0777a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明自在調生。",
        "from": "X07n0234_074:0777a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼佛法身不可說(至)於中差別不可說。",
        "from": "X07n0234_074:0777a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△第二明因位善窮。",
        "from": "X07n0234_074:0777a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文分為二。",
        "from": "X07n0234_074:0777a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初有半偈。",
        "from": "X07n0234_074:0777a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結前生後。",
        "from": "X07n0234_074:0777a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩悉能分別說諸明筭者莫能辨。",
        "from": "X07n0234_074:0777b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正顯因德。",
        "from": "X07n0234_074:0777b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中有十。",
        "from": "X07n0234_074:0777b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初八偈明帝網身土是起行處。",
        "from": "X07n0234_074:0777b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一毛端處大小剎(至)入已所作不可說。",
        "from": "X07n0234_074:0777b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又前文明其展徧。",
        "from": "X07n0234_074:0777b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明包容。",
        "from": "X07n0234_074:0777b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文影略耳。",
        "from": "X07n0234_074:0777b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言毛孔悉能受諸剎等者。",
        "from": "X07n0234_074:0777b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱法性之一毛。",
        "from": "X07n0234_074:0777b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故受多剎而無外。",
        "from": "X07n0234_074:0777b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不壞相之多剎。",
        "from": "X07n0234_074:0777b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安徧語者之一毛。",
        "from": "X07n0234_074:0777b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外緣起。",
        "from": "X07n0234_074:0777b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非即離故。",
        "from": "X07n0234_074:0777b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二三業勤勇行。",
        "from": "X07n0234_074:0777b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意根明了不可說(至)了達一切不可說。",
        "from": "X07n0234_074:0777b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有四偈半。",
        "from": "X07n0234_074:0777b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明應器攝生行。",
        "from": "X07n0234_074:0777b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生不可說(至)利益一切諸世間。",
        "from": "X07n0234_074:0777b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△四有五偈半。",
        "from": "X07n0234_074:0777b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明游方供佛行。",
        "from": "X07n0234_074:0777b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普現其身不可說(至)恭敬諸佛不可說。",
        "from": "X07n0234_074:0777b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△五有十一偈半。",
        "from": "X07n0234_074:0777b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明廣修十度行。",
        "from": "X07n0234_074:0777b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行於施不可說(至)念念恒住不可說。",
        "from": "X07n0234_074:0777b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△六有二偈半。",
        "from": "X07n0234_074:0777b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "游剎自在行。",
        "from": "X07n0234_074:0777b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛剎海不可說(至)雜染世界不可說。",
        "from": "X07n0234_074:0777b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△七有四偈。",
        "from": "X07n0234_074:0777b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明調伏眾生行。",
        "from": "X07n0234_074:0777b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知眾生不可說(至)令眾生淨不可說。",
        "from": "X07n0234_074:0777b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△八有七偈半。",
        "from": "X07n0234_074:0777b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業深淨行。",
        "from": "X07n0234_074:0777b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一毛孔不可說(至)演說讚歎不可說。",
        "from": "X07n0234_074:0777b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△九有八偈半。",
        "from": "X07n0234_074:0777b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願智自在行。",
        "from": "X07n0234_074:0777b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸菩薩不可說(至)哀愍世間不可說。",
        "from": "X07n0234_074:0777b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△十有一偈。",
        "from": "X07n0234_074:0777c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結德無盡。",
        "from": "X07n0234_074:0777c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可言說一切劫(至)不可說德不可盡。",
        "from": "X07n0234_074:0777c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二明果德深廣因能趣入。",
        "from": "X07n0234_074:0777c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文二。",
        "from": "X07n0234_074:0777c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初果三。",
        "from": "X07n0234_074:0777c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初六偈總歎佛德。",
        "from": "X07n0234_074:0777c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可言說諸如來(至)歎佛功德無能盡。",
        "from": "X07n0234_074:0777c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有三偈。",
        "from": "X07n0234_074:0777c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別明依報。",
        "from": "X07n0234_074:0777c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一微塵中能悉有(至)剎海分布不可說。",
        "from": "X07n0234_074:0777c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中所明蓮華世界賢首如來即是。",
        "from": "X07n0234_074:0777c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次品最後世界賢勝如來勝者為首。",
        "from": "X07n0234_074:0777c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其義可知。",
        "from": "X07n0234_074:0777c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三有三偈。",
        "from": "X07n0234_074:0777c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別明正報。",
        "from": "X07n0234_074:0777c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一剎中有如來(至)獲深智藏不可說。",
        "from": "X07n0234_074:0777c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三明因德趣入。",
        "from": "X07n0234_074:0777c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中二。",
        "from": "X07n0234_074:0777c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初有六偈半。",
        "from": "X07n0234_074:0777c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明自分行。",
        "from": "X07n0234_074:0777c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種數量不可說(至)一一了知不可說。",
        "from": "X07n0234_074:0777c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二有三偈半。",
        "from": "X07n0234_074:0777c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明勝進行。",
        "from": "X07n0234_074:0777c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於一時證菩提(至)菩薩一切皆明見。",
        "from": "X07n0234_074:0777c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且從相顯。",
        "from": "X07n0234_074:0777c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略申科判。",
        "from": "X07n0234_074:0777c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然上諸德。",
        "from": "X07n0234_074:0777c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德德圓融。",
        "from": "X07n0234_074:0777c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無盡無盡。",
        "from": "X07n0234_074:0777c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟忘懷體之。",
        "from": "X07n0234_074:0777c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "○壽量品第三十一",
        "from": "X07n0234_074:0777c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△初來意者。",
        "from": "X07n0234_074:0777c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫玄鑒虗朗。",
        "from": "X07n0234_074:0777c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出乎數域之表。",
        "from": "X07n0234_074:0777c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有殊形萬狀脩短之壽哉。",
        "from": "X07n0234_074:0777c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然應物隨機。",
        "from": "X07n0234_074:0777c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧無不形而無不壽。",
        "from": "X07n0234_074:0777c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故上品彰其實德。",
        "from": "X07n0234_074:0777c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此品以辨隨機。",
        "from": "X07n0234_074:0777c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖積少至多顯。",
        "from": "X07n0234_074:0777c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時無不徧。",
        "from": "X07n0234_074:0777c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前多德之一。",
        "from": "X07n0234_074:0777c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故粗廣之。",
        "from": "X07n0234_074:0777c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為遠答壽量海故。",
        "from": "X07n0234_074:0777c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以來也。",
        "from": "X07n0234_074:0777c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二釋名者。",
        "from": "X07n0234_074:0777c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽謂報命。",
        "from": "X07n0234_074:0777c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量即分限。",
        "from": "X07n0234_074:0777c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染淨土之報。",
        "from": "X07n0234_074:0777c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽隨機見之分限。",
        "from": "X07n0234_074:0777c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以顯無盡之命無限之量。",
        "from": "X07n0234_074:0778a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽之量故。",
        "from": "X07n0234_074:0778a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽有斯量。",
        "from": "X07n0234_074:0778a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通二釋也。",
        "from": "X07n0234_074:0778a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別行經名無邊佛土經。",
        "from": "X07n0234_074:0778a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以處顯人。",
        "from": "X07n0234_074:0778a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三宗趣者。",
        "from": "X07n0234_074:0778a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應物脩短為宗。",
        "from": "X07n0234_074:0778a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯窮來際無限為趣。",
        "from": "X07n0234_074:0778a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以就同教。",
        "from": "X07n0234_074:0778a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且積劣之勝。",
        "from": "X07n0234_074:0778a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若就別教。",
        "from": "X07n0234_074:0778a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則脩短圓融故。",
        "from": "X07n0234_074:0778a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次正釋文二。",
        "from": "X07n0234_074:0778a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初集經者敘。",
        "from": "X07n0234_074:0778a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時心王菩薩摩訶薩於眾會中告諸菩薩言。",
        "from": "X07n0234_074:0778a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而心王說者。",
        "from": "X07n0234_074:0778a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以領旨故。",
        "from": "X07n0234_074:0778a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛壽自在故。",
        "from": "X07n0234_074:0778a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二正說三。",
        "from": "X07n0234_074:0778a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初別舉十剎相望巧明。",
        "from": "X07n0234_074:0778a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子此娑婆世界(至)月智佛剎為一日一夜。",
        "from": "X07n0234_074:0778a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△二舉略顯廣。",
        "from": "X07n0234_074:0778a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛子如是次第乃至過百萬阿僧祇世界。",
        "from": "X07n0234_074:0778a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "△三舉其玄極。",
        "from": "X07n0234_074:0778a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後世界一劫(至)大菩薩等充滿其中。",
        "from": "X07n0234_074:0778a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且如以劫為日。",
        "from": "X07n0234_074:0778a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未歷十重。",
        "from": "X07n0234_074:0778a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則劫不可說。",
        "from": "X07n0234_074:0778a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況百萬僧祇。",
        "from": "X07n0234_074:0778a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則最後之剎。",
        "from": "X07n0234_074:0778a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已鄰剎海平等。",
        "from": "X07n0234_074:0778a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故舉普賢等充滿。",
        "from": "X07n0234_074:0778a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中者。",
        "from": "X07n0234_074:0778a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明極位所居。",
        "from": "X07n0234_074:0778a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此名為兼顯菩薩。",
        "from": "X07n0234_074:0778a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣佛華嚴經疏卷第七十四",
        "from": "X07n0234_074:0778a18_0",
        "context_with_next_sentence": false
    }
]