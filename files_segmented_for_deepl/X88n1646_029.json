[
    {
        "source_sentence": "居士傳二十九",
        "from": "X88n1646_029:0235b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李伯紀傳",
        "from": "X88n1646_029:0235b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "李伯紀。",
        "from": "X88n1646_029:0235b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名綱。",
        "from": "X88n1646_029:0235b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邵武人也。",
        "from": "X88n1646_029:0235b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父夔官龍圖待制。",
        "from": "X88n1646_029:0235b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初為松溪尉。",
        "from": "X88n1646_029:0235b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大中寺慶餘禪師往還。",
        "from": "X88n1646_029:0235b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "究心佛法。",
        "from": "X88n1646_029:0235b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時參政呂公謫居建安。",
        "from": "X88n1646_029:0235b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以龍圖故致禮於慶餘。",
        "from": "X88n1646_029:0235b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日慶餘升堂。",
        "from": "X88n1646_029:0235b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集眾跏趺化去。",
        "from": "X88n1646_029:0235b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍圖呂公方遊武夷。",
        "from": "X88n1646_029:0235b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸急趨視之。",
        "from": "X88n1646_029:0235b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "距慶餘化時越一晝夜矣。",
        "from": "X88n1646_029:0235b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呂公痛哭。",
        "from": "X88n1646_029:0235b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恨不及其生叩其所證。",
        "from": "X88n1646_029:0235b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍圖曰。",
        "from": "X88n1646_029:0235b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盍誠禱。",
        "from": "X88n1646_029:0235b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "倘能復反。",
        "from": "X88n1646_029:0235b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呂公焚香再拜。",
        "from": "X88n1646_029:0235b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就慶餘耳擊小磬數十聲。",
        "from": "X88n1646_029:0235b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶餘忽開眼笑曰。",
        "from": "X88n1646_029:0235b13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已相別。",
        "from": "X88n1646_029:0235b13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何用爾耶。",
        "from": "X88n1646_029:0235b13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為公留七日。",
        "from": "X88n1646_029:0235b14_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂下座。",
        "from": "X88n1646_029:0235b14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呂公咨問道要。",
        "from": "X88n1646_029:0235b14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請慶餘再開堂說法。",
        "from": "X88n1646_029:0235b14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍圖為之疏。",
        "from": "X88n1646_029:0235b15_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辭義甚美。",
        "from": "X88n1646_029:0235b15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及期。",
        "from": "X88n1646_029:0235b15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復如前升座而化。",
        "from": "X88n1646_029:0235b15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後伯紀過建安。",
        "from": "X88n1646_029:0235b16_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訪龍圖遺跡。",
        "from": "X88n1646_029:0235b16_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書其事。",
        "from": "X88n1646_029:0235b16_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勵學佛者。",
        "from": "X88n1646_029:0235b16_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政和二年伯紀登進士第。",
        "from": "X88n1646_029:0235b17_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷官中外事。",
        "from": "X88n1646_029:0235b17_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徽宗欽宗高宗三居相位。",
        "from": "X88n1646_029:0235b17_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤忠信於朝野。",
        "from": "X88n1646_029:0235b18_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偉略盖世。",
        "from": "X88n1646_029:0235b18_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俄頃指顧間懾強敵持危邦。",
        "from": "X88n1646_029:0235b18_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "士庶恃之以為命。",
        "from": "X88n1646_029:0235b19_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蔽於僉邪。",
        "from": "X88n1646_029:0235b19_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屢振屢絀。",
        "from": "X88n1646_029:0235b19_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入險阻。",
        "from": "X88n1646_029:0235b20_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中心浩然。",
        "from": "X88n1646_029:0235b20_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同時吳元中敏與伯紀先後柄政。",
        "from": "X88n1646_029:0235b20_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以恢復為己任。",
        "from": "X88n1646_029:0235b21_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而先後皆遠竄。",
        "from": "X88n1646_029:0235b21_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數遺書往復。",
        "from": "X88n1646_029:0235b21_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切劘大義。",
        "from": "X88n1646_029:0235b22_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慷慨痛激。",
        "from": "X88n1646_029:0235b22_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自擬申胥。",
        "from": "X88n1646_029:0235b22_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既已欲自效無由。",
        "from": "X88n1646_029:0235b22_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則發憤求出世法。",
        "from": "X88n1646_029:0235b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "研佛書。",
        "from": "X88n1646_029:0235b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞伯紀通易．華嚴二經。",
        "from": "X88n1646_029:0235b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺書雷陽問二經同別。",
        "from": "X88n1646_029:0235b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伯紀復之。",
        "from": "X88n1646_029:0235b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其略曰。",
        "from": "X88n1646_029:0235b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易立象以盡意。",
        "from": "X88n1646_029:0235b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴托事以表法。",
        "from": "X88n1646_029:0235c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無二理。",
        "from": "X88n1646_029:0235c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間出世間亦無二道。",
        "from": "X88n1646_029:0235c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以言之。",
        "from": "X88n1646_029:0235c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天地萬物之情無不攝總於八卦。",
        "from": "X88n1646_029:0235c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引而申之。",
        "from": "X88n1646_029:0235c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而其象至於無窮。",
        "from": "X88n1646_029:0235c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即華嚴法界之互相攝入也。",
        "from": "X88n1646_029:0235c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為無量。",
        "from": "X88n1646_029:0235c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量為一。",
        "from": "X88n1646_029:0235c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小中現大。",
        "from": "X88n1646_029:0235c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中現小。",
        "from": "X88n1646_029:0235c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界之成壞。",
        "from": "X88n1646_029:0235c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一漚之起滅是也。",
        "from": "X88n1646_029:0235c05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾坤之闔闢。",
        "from": "X88n1646_029:0235c05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一氣之盈虗是也。",
        "from": "X88n1646_029:0235c05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易有時。",
        "from": "X88n1646_029:0235c06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其在華嚴則世界也。",
        "from": "X88n1646_029:0235c06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易有才。",
        "from": "X88n1646_029:0235c06_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其在華嚴則法門也。",
        "from": "X88n1646_029:0235c06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞觀十處九會。",
        "from": "X88n1646_029:0235c07_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖升諸天宮說法而不離普光明殿。",
        "from": "X88n1646_029:0235c07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖普現羣生前而常處菩提座。",
        "from": "X88n1646_029:0235c08_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每會必有十方法界諸佛菩薩同一名號來集作禮。",
        "from": "X88n1646_029:0235c08_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一威儀。",
        "from": "X88n1646_029:0235c09_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慰諭稱讚。",
        "from": "X88n1646_029:0235c09_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一言說。",
        "from": "X88n1646_029:0235c10_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至所事之佛。",
        "from": "X88n1646_029:0235c10_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所從來國。",
        "from": "X88n1646_029:0235c10_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不同者。",
        "from": "X88n1646_029:0235c10_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此何理耶。",
        "from": "X88n1646_029:0235c11_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬猶鏡鏡相照。",
        "from": "X88n1646_029:0235c11_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重重相入。",
        "from": "X88n1646_029:0235c11_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有窮盡。",
        "from": "X88n1646_029:0235c11_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故百億天地即乾坤也。",
        "from": "X88n1646_029:0235c11_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百億日月即坎離也。",
        "from": "X88n1646_029:0235c12_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百億山海即艮兌也。",
        "from": "X88n1646_029:0235c12_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰極陽生君子道長。",
        "from": "X88n1646_029:0235c13_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出世也。",
        "from": "X88n1646_029:0235c13_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陽極陰生君子道消。",
        "from": "X88n1646_029:0235c13_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛滅度也。",
        "from": "X88n1646_029:0235c14_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剛柔相推以生變化。",
        "from": "X88n1646_029:0235c14_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世界生滅相依也。",
        "from": "X88n1646_029:0235c14_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六爻周流循環無端。",
        "from": "X88n1646_029:0235c15_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬物輪廻互高下也。",
        "from": "X88n1646_029:0235c15_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是言之。",
        "from": "X88n1646_029:0235c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴法界與易乾坤諸卦有二理哉。",
        "from": "X88n1646_029:0235c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞觀善財之入法界徧參五十三善知識。",
        "from": "X88n1646_029:0235c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童男童女外道僊人醫卜船師無不求也。",
        "from": "X88n1646_029:0235c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙高之峯海岸曠野城邑聚落無不至也。",
        "from": "X88n1646_029:0235c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊導其前。",
        "from": "X88n1646_029:0235c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢示其後。",
        "from": "X88n1646_029:0235c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指而樓閣開。",
        "from": "X88n1646_029:0235c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝心而佛境現。",
        "from": "X88n1646_029:0235c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其表法之意微矣。",
        "from": "X88n1646_029:0235c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然所以為菩薩道。",
        "from": "X88n1646_029:0235c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行菩薩行者。",
        "from": "X88n1646_029:0235c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不出諸波羅密等法而已。",
        "from": "X88n1646_029:0235c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六十四卦善知識也。",
        "from": "X88n1646_029:0235c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君子觀象。",
        "from": "X88n1646_029:0235c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善財徧參也。",
        "from": "X88n1646_029:0235c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卦之象無所不取。",
        "from": "X88n1646_029:0235c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而君子觀之無所不法。",
        "from": "X88n1646_029:0235c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自強不息積小而大。",
        "from": "X88n1646_029:0235c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非精進乎。",
        "from": "X88n1646_029:0235c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自昭明德作事謀始。",
        "from": "X88n1646_029:0235c24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非智慧乎。",
        "from": "X88n1646_029:0235c24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反身修德儉德辟難。",
        "from": "X88n1646_029:0235c24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非忍辱乎。",
        "from": "X88n1646_029:0236a01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱物平施施祿及下。",
        "from": "X88n1646_029:0236a01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非布施乎。",
        "from": "X88n1646_029:0236a01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懲忿窒欲慎言語節飲食。",
        "from": "X88n1646_029:0236a01_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非持戒乎。",
        "from": "X88n1646_029:0236a02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立不易方言有物行有恒。",
        "from": "X88n1646_029:0236a02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非禪定乎。",
        "from": "X88n1646_029:0236a03_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教思無窮容保民無疆茂對時育萬物。",
        "from": "X88n1646_029:0236a03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂慈也。",
        "from": "X88n1646_029:0236a04_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "議獄緩死明慎用刑而不留獄。",
        "from": "X88n1646_029:0236a04_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂悲也。",
        "from": "X88n1646_029:0236a04_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食宴樂朋友講習。",
        "from": "X88n1646_029:0236a05_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂喜也。",
        "from": "X88n1646_029:0236a05_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨立不懼遯世無悶。",
        "from": "X88n1646_029:0236a05_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂捨也。",
        "from": "X88n1646_029:0236a06_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成卦之象皆出於乾坤。",
        "from": "X88n1646_029:0236a06_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君子觀象皆得於易簡。",
        "from": "X88n1646_029:0236a06_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易簡而天下之理得矣。",
        "from": "X88n1646_029:0236a07_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是觀之。",
        "from": "X88n1646_029:0236a07_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴法門與易之易簡法門有二理哉。",
        "from": "X88n1646_029:0236a07_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫辭論八卦。",
        "from": "X88n1646_029:0236a08_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必妙之以神。",
        "from": "X88n1646_029:0236a08_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八卦者菩薩也。",
        "from": "X88n1646_029:0236a09_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如所謂文殊小男。",
        "from": "X88n1646_029:0236a09_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢長子之類是也。",
        "from": "X88n1646_029:0236a09_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神者佛也。",
        "from": "X88n1646_029:0236a10_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如所謂毗盧遮那是也。",
        "from": "X88n1646_029:0236a10_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生之謂易。",
        "from": "X88n1646_029:0236a10_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一陰一陽之謂道。",
        "from": "X88n1646_029:0236a11_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰陽不測之謂神。",
        "from": "X88n1646_029:0236a11_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶佛之有清淨法身。",
        "from": "X88n1646_029:0236a11_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿報身。",
        "from": "X88n1646_029:0236a12_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千百億化身也。",
        "from": "X88n1646_029:0236a12_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八卦用事而易無作。",
        "from": "X88n1646_029:0236a12_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸菩薩說法而佛無言。",
        "from": "X88n1646_029:0236a13_57",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散佛之體則文殊得其理。",
        "from": "X88n1646_029:0236a13_58",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢得其行。",
        "from": "X88n1646_029:0236a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀音得其悲。",
        "from": "X88n1646_029:0236a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢至得其智。",
        "from": "X88n1646_029:0236a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合之則佛也。",
        "from": "X88n1646_029:0236a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散易之體。",
        "from": "X88n1646_029:0236a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則乾得其健。",
        "from": "X88n1646_029:0236a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坤得其順。",
        "from": "X88n1646_029:0236a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六子得其動止陷麗說入。",
        "from": "X88n1646_029:0236a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合之則易也。",
        "from": "X88n1646_029:0236a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神無方也。",
        "from": "X88n1646_029:0236a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "易無體也。",
        "from": "X88n1646_029:0236a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛身充滿於法界。",
        "from": "X88n1646_029:0236a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不在。",
        "from": "X88n1646_029:0236a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不為也。",
        "from": "X88n1646_029:0236a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無芥子許孔中無虗空。",
        "from": "X88n1646_029:0236a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一塵中無佛身。",
        "from": "X88n1646_029:0236a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翾飛蠕動皆神之所妙。",
        "from": "X88n1646_029:0236a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草木縷結皆易之所存。",
        "from": "X88n1646_029:0236a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反而觀之。",
        "from": "X88n1646_029:0236a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則大千法界與夫天地萬物皆在吾方寸之間。",
        "from": "X88n1646_029:0236a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故孟子曰。",
        "from": "X88n1646_029:0236a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬物皆備於我矣。",
        "from": "X88n1646_029:0236a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反身而誠。",
        "from": "X88n1646_029:0236a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂莫大焉。",
        "from": "X88n1646_029:0236a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "楞嚴曰。",
        "from": "X88n1646_029:0236a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間諸所有物。",
        "from": "X88n1646_029:0236a21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆即菩提妙明元心。",
        "from": "X88n1646_029:0236a21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心精徧圓。",
        "from": "X88n1646_029:0236a22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "含裹十方。",
        "from": "X88n1646_029:0236a22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反觀父母所生之身。",
        "from": "X88n1646_029:0236a22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶彼十方虗空之中。",
        "from": "X88n1646_029:0236a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吹一微塵若存若亡。",
        "from": "X88n1646_029:0236a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如湛巨海流一浮漚。",
        "from": "X88n1646_029:0236a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起滅無從。",
        "from": "X88n1646_029:0236a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心地法門也。",
        "from": "X88n1646_029:0236a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為易之說。",
        "from": "X88n1646_029:0236a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則曰復其見天地之心乎。",
        "from": "X88n1646_029:0236a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此洗心。",
        "from": "X88n1646_029:0236b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退藏於密。",
        "from": "X88n1646_029:0236b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉凶與民同患。",
        "from": "X88n1646_029:0236b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為華嚴之說。",
        "from": "X88n1646_029:0236b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則曰當觀法界性。",
        "from": "X88n1646_029:0236b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切唯心造。",
        "from": "X88n1646_029:0236b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善用其心則獲一切勝妙功德。",
        "from": "X88n1646_029:0236b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心靜而明。",
        "from": "X88n1646_029:0236b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓而大。",
        "from": "X88n1646_029:0236b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虗而通。",
        "from": "X88n1646_029:0236b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂而靈。",
        "from": "X88n1646_029:0236b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立萬法為之主宰。",
        "from": "X88n1646_029:0236b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而物有蔽之。",
        "from": "X88n1646_029:0236b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則明者暗。",
        "from": "X88n1646_029:0236b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大者小。",
        "from": "X88n1646_029:0236b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通者礙。",
        "from": "X88n1646_029:0236b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈者頑。",
        "from": "X88n1646_029:0236b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂操存而舍亡也。",
        "from": "X88n1646_029:0236b05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故易立象以盡意。",
        "from": "X88n1646_029:0236b05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴托事以表法。",
        "from": "X88n1646_029:0236b06_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以其本來所有者示之。",
        "from": "X88n1646_029:0236b06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非能與其所無也。",
        "from": "X88n1646_029:0236b07_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體此道者莫若誠。",
        "from": "X88n1646_029:0236b07_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至誠則不息。",
        "from": "X88n1646_029:0236b07_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不息則悠久。",
        "from": "X88n1646_029:0236b08_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悠久則博厚。",
        "from": "X88n1646_029:0236b08_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博厚則高明。",
        "from": "X88n1646_029:0236b08_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰惟天下至誠為能盡己之性。",
        "from": "X88n1646_029:0236b08_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能盡己之性則能盡人之性。",
        "from": "X88n1646_029:0236b09_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能盡人之性則能盡物之性。",
        "from": "X88n1646_029:0236b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能盡物之性則可與天地參。",
        "from": "X88n1646_029:0236b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此致其誠而天地萬物得於一心者也。",
        "from": "X88n1646_029:0236b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔之發無上道者。",
        "from": "X88n1646_029:0236b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自十信始。",
        "from": "X88n1646_029:0236b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰信為道元功德母。",
        "from": "X88n1646_029:0236b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長養一切諸善根。",
        "from": "X88n1646_029:0236b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷諸疑網出愛流。",
        "from": "X88n1646_029:0236b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開示涅槃無上道。",
        "from": "X88n1646_029:0236b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此充之為十住．十行．十回向．十地。",
        "from": "X88n1646_029:0236b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成等正覺。",
        "from": "X88n1646_029:0236b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶育孩稚以為成人。",
        "from": "X88n1646_029:0236b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "養根萌以為成材。",
        "from": "X88n1646_029:0236b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其骨節枝幹初已具足。",
        "from": "X88n1646_029:0236b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充大之而已。",
        "from": "X88n1646_029:0236b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其悲願之深。",
        "from": "X88n1646_029:0236b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛精進。",
        "from": "X88n1646_029:0236b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為羣生入諸惡趣。",
        "from": "X88n1646_029:0236b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受種種苦。",
        "from": "X88n1646_029:0236b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不退轉。",
        "from": "X88n1646_029:0236b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而况死生禍福毀譽足驚怖動搖之乎。",
        "from": "X88n1646_029:0236b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故能出入三界。",
        "from": "X88n1646_029:0236b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊戲十方。",
        "from": "X88n1646_029:0236b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於夢幻中而作佛事。",
        "from": "X88n1646_029:0236b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此致其誠而華嚴之法界得於一心者也。",
        "from": "X88n1646_029:0236b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者皆不出於心法。",
        "from": "X88n1646_029:0236b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故吾儕之所當自事者心而已。",
        "from": "X88n1646_029:0236b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了此則廓然。",
        "from": "X88n1646_029:0236b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有何事。",
        "from": "X88n1646_029:0236b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫晝之所想即夜之所夢。",
        "from": "X88n1646_029:0236b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生之所履即死之所為。",
        "from": "X88n1646_029:0236b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春之所種即秋之所獲。",
        "from": "X88n1646_029:0236b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以處世間者所以出世間者。",
        "from": "X88n1646_029:0236b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儒釋之術一也。",
        "from": "X88n1646_029:0236b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫何疑哉。",
        "from": "X88n1646_029:0236b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通妙用在運水搬柴中。",
        "from": "X88n1646_029:0236b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐脫立亡在著衣吃飯中。",
        "from": "X88n1646_029:0236b24_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上妙道在平常心中。",
        "from": "X88n1646_029:0236b24_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願試思之。",
        "from": "X88n1646_029:0236c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後以江西安撫使乞祠提舉臨安洞霄宮。",
        "from": "X88n1646_029:0236c01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹興十年卒。",
        "from": "X88n1646_029:0236c02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年五十八。",
        "from": "X88n1646_029:0236c02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "贈少師。",
        "from": "X88n1646_029:0236c02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡忠定。",
        "from": "X88n1646_029:0236c02_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中歲甞自題其像曰。",
        "from": "X88n1646_029:0236c03_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是影是形。",
        "from": "X88n1646_029:0236c03_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了無差別。",
        "from": "X88n1646_029:0236c03_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行年之化。",
        "from": "X88n1646_029:0236c03_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十有八。",
        "from": "X88n1646_029:0236c04_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "返觀其前。",
        "from": "X88n1646_029:0236c04_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "膚腴色悅。",
        "from": "X88n1646_029:0236c04_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是以往。",
        "from": "X88n1646_029:0236c04_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒼顏華髮。",
        "from": "X88n1646_029:0236c04_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來面目。",
        "from": "X88n1646_029:0236c05_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生不滅。",
        "from": "X88n1646_029:0236c05_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊戲仕塗。",
        "from": "X88n1646_029:0236c05_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天付之拙。",
        "from": "X88n1646_029:0236c05_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須天而行。",
        "from": "X88n1646_029:0236c05_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一無敢設。",
        "from": "X88n1646_029:0236c06_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨知其天。",
        "from": "X88n1646_029:0236c06_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧有他訣。",
        "from": "X88n1646_029:0236c06_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬里清風。",
        "from": "X88n1646_029:0236c06_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一輪明月。",
        "from": "X88n1646_029:0236c06_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有來問者。",
        "from": "X88n1646_029:0236c07_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默然無說(李忠定集．宋史)。",
        "from": "X88n1646_029:0236c07_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_029:0236c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世之議儒釋者不得其本。",
        "from": "X88n1646_029:0236c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往往知見立知。",
        "from": "X88n1646_029:0236c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滯迹異同之間。",
        "from": "X88n1646_029:0236c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "籓太虗。",
        "from": "X88n1646_029:0236c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫滄溟。",
        "from": "X88n1646_029:0236c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汗漫精微。",
        "from": "X88n1646_029:0236c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祇成戲論耳。",
        "from": "X88n1646_029:0236c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾觀伯紀與吳元中書。",
        "from": "X88n1646_029:0236c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周易策數華嚴法界涉入圓融同一涅槃。",
        "from": "X88n1646_029:0236c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元清淨體。",
        "from": "X88n1646_029:0236c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼其出入塵勞煩惱中。",
        "from": "X88n1646_029:0236c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨肩世界不厭不疲。",
        "from": "X88n1646_029:0236c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非誠得其本者其能如是乎。",
        "from": "X88n1646_029:0236c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_029:0236c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予讀論語。",
        "from": "X88n1646_029:0236c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至予欲無言。",
        "from": "X88n1646_029:0236c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及莫我知也夫。",
        "from": "X88n1646_029:0236c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輙為之喟然歎曰。",
        "from": "X88n1646_029:0236c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其先師窮理盡性以至於命之時乎。",
        "from": "X88n1646_029:0236c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其釋迦氏見明星而豁然大悟之境界乎。",
        "from": "X88n1646_029:0236c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先師之發是言也。",
        "from": "X88n1646_029:0236c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從天而降。",
        "from": "X88n1646_029:0236c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知影落何處。",
        "from": "X88n1646_029:0236c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是言也端木先生以上大弟子不用問。",
        "from": "X88n1646_029:0236c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端木先生以下大弟子不能問。",
        "from": "X88n1646_029:0236c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟端木先生能逆流而入曰。",
        "from": "X88n1646_029:0236c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子如不言。",
        "from": "X88n1646_029:0236c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則小子何述焉。",
        "from": "X88n1646_029:0236c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰何為其莫知子也。",
        "from": "X88n1646_029:0236c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是問也。",
        "from": "X88n1646_029:0236c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香象渡河。",
        "from": "X88n1646_029:0236c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金翅劈海。",
        "from": "X88n1646_029:0236c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為百萬人之橋梁。",
        "from": "X88n1646_029:0236c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是先師現毗盧身為說法曰。",
        "from": "X88n1646_029:0236c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天何言哉。",
        "from": "X88n1646_029:0236c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四時行焉。",
        "from": "X88n1646_029:0236c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百物生焉。",
        "from": "X88n1646_029:0236c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天何言哉。",
        "from": "X88n1646_029:0236c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此華嚴重重法界也。",
        "from": "X88n1646_029:0236c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X88n1646_029:0236c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不怨天。",
        "from": "X88n1646_029:0236c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不尤人。",
        "from": "X88n1646_029:0236c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下學而上達。",
        "from": "X88n1646_029:0236c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知我者其天乎。",
        "from": "X88n1646_029:0236c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此華嚴十信．十住．十行．十迴向．十地成等正覺也。",
        "from": "X88n1646_029:0236c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖聖門之所謂天。",
        "from": "X88n1646_029:0236c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即佛門之所謂毗盧法身也。",
        "from": "X88n1646_029:0236c24_4",
        "context_with_next_sentence": false
    }
]