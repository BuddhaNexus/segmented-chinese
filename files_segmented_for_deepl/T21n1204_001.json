[
    {
        "source_sentence": "聖無動尊一字出生八大童子祕",
        "from": "T21n1204_001:0031a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "要法品",
        "from": "T21n1204_001:0031a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺翻經院述",
        "from": "T21n1204_001:0031a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T21n1204_001:0031a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生意想不同。",
        "from": "T21n1204_001:0031a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或順或逆。",
        "from": "T21n1204_001:0031a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故如來現慈怒身。",
        "from": "T21n1204_001:0031a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨作利益。",
        "from": "T21n1204_001:0031a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解云。",
        "from": "T21n1204_001:0031a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛大悲愍眾生故。",
        "from": "T21n1204_001:0031a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於順者以順而勸。",
        "from": "T21n1204_001:0031a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於逆者以逆而制也。",
        "from": "T21n1204_001:0031a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一佛住忿怒三昧。",
        "from": "T21n1204_001:0031a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時十方諸佛同共入忿怒瞋三昧。",
        "from": "T21n1204_001:0031a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈毘盧遮那於無相中示現明王。",
        "from": "T21n1204_001:0031b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸佛菩薩更不現忿怒身哉。",
        "from": "T21n1204_001:0031b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故四方如來。",
        "from": "T21n1204_001:0031b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現教令身降伏眾魔。",
        "from": "T21n1204_001:0031b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然猶不親隨逐。",
        "from": "T21n1204_001:0031b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以本誓不同。",
        "from": "T21n1204_001:0031b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或降三世菩薩。",
        "from": "T21n1204_001:0031b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏天魔及三世貪瞋癡。",
        "from": "T21n1204_001:0031b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或軍荼利菩薩調伏常隨魔。",
        "from": "T21n1204_001:0031b05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂毘那夜迦。",
        "from": "T21n1204_001:0031b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及人魔或焰魔特迦。",
        "from": "T21n1204_001:0031b06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏龍魔及諸怨敵。",
        "from": "T21n1204_001:0031b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或金剛夜叉。",
        "from": "T21n1204_001:0031b07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏鬼魔及無智者。",
        "from": "T21n1204_001:0031b07_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種不可具說。",
        "from": "T21n1204_001:0031b08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動明王恒隨行者。",
        "from": "T21n1204_001:0031b08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天若毘那夜迦。",
        "from": "T21n1204_001:0031b09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若龍若鬼。",
        "from": "T21n1204_001:0031b09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作障礙一時消滅。",
        "from": "T21n1204_001:0031b09_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然諸佛菩薩。",
        "from": "T21n1204_001:0031b10_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若同住一三昧者。",
        "from": "T21n1204_001:0031b10_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可有隨不動弘誓之使者。",
        "from": "T21n1204_001:0031b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰有三藏不空能達明道。",
        "from": "T21n1204_001:0031b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即披見祕藏要文。",
        "from": "T21n1204_001:0031b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有不動明王一字心密語。",
        "from": "T21n1204_001:0031b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以八字而嚴一字。",
        "from": "T21n1204_001:0031b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其八字者即歸命句也。",
        "from": "T21n1204_001:0031b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唅字為本尊。",
        "from": "T21n1204_001:0031b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾寧上八字無其形哉。",
        "from": "T21n1204_001:0031b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T21n1204_001:0031b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫等八字。",
        "from": "T21n1204_001:0031b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆歸敬於唅之一字。",
        "from": "T21n1204_001:0031b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故從其八字出生歸敬使者。",
        "from": "T21n1204_001:0031b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圍繞於唅之本尊。",
        "from": "T21n1204_001:0031b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以有八大童子。",
        "from": "T21n1204_001:0031b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一慧光菩薩(金剛云。",
        "from": "T21n1204_001:0031b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴光即以慧如光照迴一切故)。",
        "from": "T21n1204_001:0031b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二慧喜菩薩(金剛云。",
        "from": "T21n1204_001:0031b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧喜即迴慧為喜)。",
        "from": "T21n1204_001:0031b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三阿耨達菩薩。",
        "from": "T21n1204_001:0031b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四指德菩薩。",
        "from": "T21n1204_001:0031b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五烏俱婆誐。",
        "from": "T21n1204_001:0031b20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六清淨比丘。",
        "from": "T21n1204_001:0031b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七矜羯羅。",
        "from": "T21n1204_001:0031b20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八制吒迦。",
        "from": "T21n1204_001:0031b20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是等使者四智四波羅蜜。",
        "from": "T21n1204_001:0031b21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為親隨順大日教令故。",
        "from": "T21n1204_001:0031b21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯現此形圍繞聖無動尊也。",
        "from": "T21n1204_001:0031b22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各別真言中顯示其義。",
        "from": "T21n1204_001:0031b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解云。",
        "from": "T21n1204_001:0031b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方金剛部。",
        "from": "T21n1204_001:0031b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即菩提心門。",
        "from": "T21n1204_001:0031b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以日光為喻。",
        "from": "T21n1204_001:0031b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出生使者名慧光。",
        "from": "T21n1204_001:0031b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方寶部即福德門。",
        "from": "T21n1204_001:0031b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出生使者名慧喜。",
        "from": "T21n1204_001:0031b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以福智二嚴為喜故。",
        "from": "T21n1204_001:0031b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方蓮華部即智慧門。",
        "from": "T21n1204_001:0031b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出現使者名阿耨達。",
        "from": "T21n1204_001:0031b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云無熱。",
        "from": "T21n1204_001:0031b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表蓮華生池水而清淨無垢故。",
        "from": "T21n1204_001:0031b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北方羯磨部即精進門。",
        "from": "T21n1204_001:0031b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出生使者名指德也。",
        "from": "T21n1204_001:0031c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此部指前三部德。",
        "from": "T21n1204_001:0031c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即依精進能得果故。",
        "from": "T21n1204_001:0031c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以名指德(已上四智)金剛波羅蜜即菩提心行。",
        "from": "T21n1204_001:0031c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出現。",
        "from": "T21n1204_001:0031c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使者名烏俱婆誐。",
        "from": "T21n1204_001:0031c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云超越住世也。",
        "from": "T21n1204_001:0031c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶波羅蜜福德心行。",
        "from": "T21n1204_001:0031c04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出生使者名清淨比丘。",
        "from": "T21n1204_001:0031c05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表比丘能守護法寶故。",
        "from": "T21n1204_001:0031c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法波羅蜜慈悲心行。",
        "from": "T21n1204_001:0031c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出現使者名矜羯羅。",
        "from": "T21n1204_001:0031c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云隨順。",
        "from": "T21n1204_001:0031c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業波羅蜜即方便心行。",
        "from": "T21n1204_001:0031c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以出生使者名制多迦。",
        "from": "T21n1204_001:0031c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此云息災也。",
        "from": "T21n1204_001:0031c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩方便現瞋形故也。",
        "from": "T21n1204_001:0031c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八童子所依說已竟。",
        "from": "T21n1204_001:0031c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行者欲得現當悉地者。",
        "from": "T21n1204_001:0031c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行法之中稱彼各名。",
        "from": "T21n1204_001:0031c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請乞救護及結印誦呪。",
        "from": "T21n1204_001:0031c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成一切世間殊勝悉地。",
        "from": "T21n1204_001:0031c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧光童子菩薩真言曰(即金剛合掌忍願合如針)。",
        "from": "T21n1204_001:0031c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日囉(二合)(一)　摩　帝　入縛(二合)　攞(二)菩　地　質　多(三)　曩(歸命本尊)慧喜菩薩真言曰(金合忍願如寶形)。",
        "from": "T21n1204_001:0031c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　囉　怛曩(二合)(一)　摩　帝　娑　度(二)　摩　訶　摩抳(三)　莫(歸命本尊)阿耨達菩薩真言曰(金合忍願如蓮葉)。",
        "from": "T21n1204_001:0031c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　鉢　納麼(二合)(一)　薩　嚩　娜(引)　賀　鉢囉(二合)捨　弭　曩(二)　摩　訶　達　摩(三)　三(歸命本尊)指德童子菩薩真言曰(金合忍願入掌中面相合)。",
        "from": "T21n1204_001:0031c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　羯　羅摩(二合)　摩　訶　吠　哩耶(大無畏也)　鉢哩　布　囉　迦(滿願)　滿(歸命本尊)烏俱婆誐童子真言曰(金剛合掌)。",
        "from": "T21n1204_001:0032a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　嚩　日囉(二合)(一)　薩　埵婆(二)　烏　俱　婆　誐(三)摩　訶　燥　企耶(二合)(四)　多(歸命本尊)清淨比丘使者真言曰(梵夾印)。",
        "from": "T21n1204_001:0032a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　摩　尼(一)　尾　輸　馱　達　摩　俱　嚕(二)囉　乞叉　達　摩(三)　嚩(歸命本尊)矜羯囉童子真言曰(蓮華合掌)。",
        "from": "T21n1204_001:0032a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　達　嚕麼(一)　矜　羯　囉(二)　底　瑟吒(三)日囉(二合)(歸命本尊)制多迦童子真言曰(外縛五股印)。",
        "from": "T21n1204_001:0032a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵　羯　嚕麼(一)　制　吒　迦(二)　吽　吽(三)　發　吒(四)南(歸命本尊)次本尊真言曰(通用經中印)。",
        "from": "T21n1204_001:0032a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵(一)　阿　左　囉(二)　贊　拏(三)　唅(所歸本尊)次說像法。",
        "from": "T21n1204_001:0032a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者點取一清淨靜處。",
        "from": "T21n1204_001:0032b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令見人及與非人。",
        "from": "T21n1204_001:0032b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即行者與工人共清淨著新淨衣。",
        "from": "T21n1204_001:0032b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取白[疊*毛]或淨版或淨衣。",
        "from": "T21n1204_001:0032b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令畫本尊與八大童子(本尊通用經中像)。",
        "from": "T21n1204_001:0032b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧光之形。",
        "from": "T21n1204_001:0032b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少忿怒著天冠。",
        "from": "T21n1204_001:0032b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身白黃色。",
        "from": "T21n1204_001:0032b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持五智杵。",
        "from": "T21n1204_001:0032b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手蓮上置月輪。",
        "from": "T21n1204_001:0032b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "袈裟瓔珞種種莊嚴。",
        "from": "T21n1204_001:0032b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次慧喜菩薩。",
        "from": "T21n1204_001:0032b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形似慈面現微笑相。",
        "from": "T21n1204_001:0032b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色如紅蓮。",
        "from": "T21n1204_001:0032b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持摩尼。",
        "from": "T21n1204_001:0032b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持三股鉤。",
        "from": "T21n1204_001:0032b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿耨達菩薩形如梵王。",
        "from": "T21n1204_001:0032b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色如真金頂戴金翅鳥。",
        "from": "T21n1204_001:0032b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執蓮華。",
        "from": "T21n1204_001:0032b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持獨股杵。",
        "from": "T21n1204_001:0032b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而乘龍王。",
        "from": "T21n1204_001:0032b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指德菩薩形如夜叉。",
        "from": "T21n1204_001:0032b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色如虛空而有三目著甲冑。",
        "from": "T21n1204_001:0032b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手持輪。",
        "from": "T21n1204_001:0032b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手三叉鉾。",
        "from": "T21n1204_001:0032b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏俱婆誐戴五股冠。",
        "from": "T21n1204_001:0032b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現暴惡相身如金色。",
        "from": "T21n1204_001:0032b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執縛日囉。",
        "from": "T21n1204_001:0032b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手作拳印。",
        "from": "T21n1204_001:0032b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨比丘剃除首髮。",
        "from": "T21n1204_001:0032b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而著法袈裟。",
        "from": "T21n1204_001:0032b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於左肩結垂。",
        "from": "T21n1204_001:0032b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執梵夾。",
        "from": "T21n1204_001:0032b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手當心持五股杵。",
        "from": "T21n1204_001:0032b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右肩現露。",
        "from": "T21n1204_001:0032b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於腰纏赤裳。",
        "from": "T21n1204_001:0032b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其面貌非若非老。",
        "from": "T21n1204_001:0032b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目如青蓮。",
        "from": "T21n1204_001:0032b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其口上牙於下顯出。",
        "from": "T21n1204_001:0032b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次矜羯囉形如十五歲童。",
        "from": "T21n1204_001:0032b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著蓮華冠身白肉色。",
        "from": "T21n1204_001:0032b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌。",
        "from": "T21n1204_001:0032b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其二大指與頭指間。",
        "from": "T21n1204_001:0032b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫插一股杵。",
        "from": "T21n1204_001:0032b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天衣袈裟微妙嚴飾。",
        "from": "T21n1204_001:0032b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次制吒迦亦如童子。",
        "from": "T21n1204_001:0032b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色如紅蓮頭結五髻(一結頂上之中。",
        "from": "T21n1204_001:0032b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一結額上。",
        "from": "T21n1204_001:0032b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二結頭左右。",
        "from": "T21n1204_001:0032b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一結頂後。",
        "from": "T21n1204_001:0032b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表五方五智)左手嚩日囉。",
        "from": "T21n1204_001:0032b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執金剛棒。",
        "from": "T21n1204_001:0032b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋心惡性之者故不著袈裟。",
        "from": "T21n1204_001:0032b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天衣纏其頸肩。",
        "from": "T21n1204_001:0032b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫像法說已竟。",
        "from": "T21n1204_001:0032b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說供養法。",
        "from": "T21n1204_001:0032b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者欲陳供養者。",
        "from": "T21n1204_001:0032b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須發菩提心。",
        "from": "T21n1204_001:0032b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩提心。",
        "from": "T21n1204_001:0032b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂發救眾生之心。",
        "from": "T21n1204_001:0032b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟眾生苦惱起拔濟心也。",
        "from": "T21n1204_001:0032b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是發心時。",
        "from": "T21n1204_001:0032c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動明王及八大童子為不請師。",
        "from": "T21n1204_001:0032c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從自心出護持行者。",
        "from": "T21n1204_001:0032c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當供養。",
        "from": "T21n1204_001:0032c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於山林寂靜之處。",
        "from": "T21n1204_001:0032c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香散花持念真言。",
        "from": "T21n1204_001:0032c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行時。",
        "from": "T21n1204_001:0032c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使者現身隨意奉仕。",
        "from": "T21n1204_001:0032c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須禮四方如來發大誓願。",
        "from": "T21n1204_001:0032c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即禮東方作是念言。",
        "from": "T21n1204_001:0032c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生無邊誓願度。",
        "from": "T21n1204_001:0032c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是大圓鏡智願也。",
        "from": "T21n1204_001:0032c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即菩提心門。",
        "from": "T21n1204_001:0032c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心即度眾生心。",
        "from": "T21n1204_001:0032c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故發此願作禮者。",
        "from": "T21n1204_001:0032c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成佛常得金剛薩埵加持。",
        "from": "T21n1204_001:0032c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令菩提心圓滿。",
        "from": "T21n1204_001:0032c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮南方作是念言。",
        "from": "T21n1204_001:0032c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智無邊誓願集。",
        "from": "T21n1204_001:0032c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是平等性智之因也。",
        "from": "T21n1204_001:0032c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即福智門。",
        "from": "T21n1204_001:0032c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以福智二種資糧利益眾生故。",
        "from": "T21n1204_001:0032c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若發此願作此禮者。",
        "from": "T21n1204_001:0032c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成佛地地中常得虛空藏菩薩授與灌頂。",
        "from": "T21n1204_001:0032c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智圓滿。",
        "from": "T21n1204_001:0032c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮西方作是念言。",
        "from": "T21n1204_001:0032c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法門無邊誓願學。",
        "from": "T21n1204_001:0032c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是願妙觀察智之因也。",
        "from": "T21n1204_001:0032c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即智慧門。",
        "from": "T21n1204_001:0032c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為大法王故。",
        "from": "T21n1204_001:0032c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是願禮者。",
        "from": "T21n1204_001:0032c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成佛當得觀自在菩薩加持。",
        "from": "T21n1204_001:0032c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧圓滿。",
        "from": "T21n1204_001:0032c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮北方而作是念言。",
        "from": "T21n1204_001:0032c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來無邊誓願仕。",
        "from": "T21n1204_001:0032c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是成所作智之因也。",
        "from": "T21n1204_001:0032c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作業門。",
        "from": "T21n1204_001:0032c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸佛前作諸事業故。",
        "from": "T21n1204_001:0032c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作是願禮者。",
        "from": "T21n1204_001:0032c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成佛當得金剛業菩薩加持。",
        "from": "T21n1204_001:0032c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切佛世界成就廣大供養業。",
        "from": "T21n1204_001:0032c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮毘盧遮那如來而作是言。",
        "from": "T21n1204_001:0032c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上菩提誓願證。",
        "from": "T21n1204_001:0032c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法界體性智之因也。",
        "from": "T21n1204_001:0032c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證大日普賢位。",
        "from": "T21n1204_001:0032c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍法界。",
        "from": "T21n1204_001:0032c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更利眾生故發此願。",
        "from": "T21n1204_001:0032c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時十方諸佛同時證明。",
        "from": "T21n1204_001:0032c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚言善哉。",
        "from": "T21n1204_001:0032c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故一切菩薩聖眾皆共守護。",
        "from": "T21n1204_001:0032c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當得被無上道。",
        "from": "T21n1204_001:0032c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總願既說。",
        "from": "T21n1204_001:0032c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘諸別願隨意應陳。",
        "from": "T21n1204_001:0032c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至以此善根迴向自他平等利益。",
        "from": "T21n1204_001:0032c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼不食不淨之物。",
        "from": "T21n1204_001:0033a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無憂愁不起貪瞋癡等煩惱。",
        "from": "T21n1204_001:0033a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不樂世樂深修禪定。",
        "from": "T21n1204_001:0033a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行者是世大樂。",
        "from": "T21n1204_001:0033a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是眾生師。",
        "from": "T21n1204_001:0033a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地現前。",
        "from": "T21n1204_001:0033a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證無上正等菩提。",
        "from": "T21n1204_001:0033a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖無動尊一字出生八大童子祕要法品享保二十龍飛乙卯清明念八日。",
        "from": "T21n1204_001:0033a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊點師傳刊行焉。",
        "from": "T21n1204_001:0033a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無異本可以校者。",
        "from": "T21n1204_001:0033a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則以其未正冠書之。",
        "from": "T21n1204_001:0033a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以備後人之取捨。",
        "from": "T21n1204_001:0033a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冀為訂之。",
        "from": "T21n1204_001:0033a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　日域豐山長谷輪下桑門無等識",
        "from": "T21n1204_001:0033a09_0",
        "context_with_next_sentence": false
    }
]