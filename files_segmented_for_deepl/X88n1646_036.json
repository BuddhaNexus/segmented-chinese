[
    {
        "source_sentence": "居士傳三十六",
        "from": "X88n1646_036:0246c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耶律晉卿國寶傳",
        "from": "X88n1646_036:0246c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耶律晉卿名楚材。",
        "from": "X88n1646_036:0246c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遼東丹王突欲八世孫也。",
        "from": "X88n1646_036:0246c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仕金為開州同知。",
        "from": "X88n1646_036:0246c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣宗遷汴。",
        "from": "X88n1646_036:0246c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "完顏復興守燕。",
        "from": "X88n1646_036:0246c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟為左右司員外郎。",
        "from": "X88n1646_036:0246c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元太祖既定燕。",
        "from": "X88n1646_036:0246c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿閒居久之。",
        "from": "X88n1646_036:0246c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而太祖聞其名。",
        "from": "X88n1646_036:0246c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召置左右。",
        "from": "X88n1646_036:0246c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日益信任。",
        "from": "X88n1646_036:0246c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每從征伐。",
        "from": "X88n1646_036:0246c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿隨事納諫。",
        "from": "X88n1646_036:0246c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務止殺以全民命。",
        "from": "X88n1646_036:0246c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太宗即位。",
        "from": "X88n1646_036:0246c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拜中書令。",
        "from": "X88n1646_036:0246c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍國大計悉取決焉。",
        "from": "X88n1646_036:0246c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是均賦稅。",
        "from": "X88n1646_036:0246c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正官制。",
        "from": "X88n1646_036:0246c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興文學。",
        "from": "X88n1646_036:0246c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覈工匠。",
        "from": "X88n1646_036:0246c22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平權量。",
        "from": "X88n1646_036:0246c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "給符印。",
        "from": "X88n1646_036:0246c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百度具舉。",
        "from": "X88n1646_036:0246c23_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遐邇悅服。",
        "from": "X88n1646_036:0246c23_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元遂得撫定中原者。",
        "from": "X88n1646_036:0246c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿之力也。",
        "from": "X88n1646_036:0246c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿於學無所不闚。",
        "from": "X88n1646_036:0246c24_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尤傾心祖道。",
        "from": "X88n1646_036:0246c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初年二十餘。",
        "from": "X88n1646_036:0246c24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居燕。",
        "from": "X88n1646_036:0247a01_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自以所得叩聖安澄公。",
        "from": "X88n1646_036:0247a01_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄公時見許可。",
        "from": "X88n1646_036:0247a01_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後輙不以為然。",
        "from": "X88n1646_036:0247a01_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿請其故。",
        "from": "X88n1646_036:0247a02_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄公曰。",
        "from": "X88n1646_036:0247a02_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公昔官要劇。",
        "from": "X88n1646_036:0247a02_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予不敢苦相鉗鎚。",
        "from": "X88n1646_036:0247a02_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又儒者多不信佛法。",
        "from": "X88n1646_036:0247a03_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯搜摘語錄以資談抦耳。",
        "from": "X88n1646_036:0247a03_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今誠有志本分事。",
        "from": "X88n1646_036:0247a04_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予安得不為苦口。",
        "from": "X88n1646_036:0247a04_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然。",
        "from": "X88n1646_036:0247a04_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾老矣。",
        "from": "X88n1646_036:0247a04_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有萬松老人兼通儒釋。",
        "from": "X88n1646_036:0247a05_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨才無礙。",
        "from": "X88n1646_036:0247a05_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可往見之。",
        "from": "X88n1646_036:0247a05_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿遂謁萬松秀公。",
        "from": "X88n1646_036:0247a05_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屏絕人事。",
        "from": "X88n1646_036:0247a06_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息心參究。",
        "from": "X88n1646_036:0247a06_49",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖祁寒大暑不輟。",
        "from": "X88n1646_036:0247a06_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迄三年而盡其道。",
        "from": "X88n1646_036:0247a07_51",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秀公授以衣。",
        "from": "X88n1646_036:0247a07_52",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之曰從源。",
        "from": "X88n1646_036:0247a07_53",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號曰湛然居士。",
        "from": "X88n1646_036:0247a07_54",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後歷官貴顯。",
        "from": "X88n1646_036:0247a08_55",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日應萬務而神明淡泊。",
        "from": "X88n1646_036:0247a08_56",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如處深山中。",
        "from": "X88n1646_036:0247a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日秀公過其家。",
        "from": "X88n1646_036:0247a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見晉卿方啖菜根飯脫粟。",
        "from": "X88n1646_036:0247a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰不太儉乎。",
        "from": "X88n1646_036:0247a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿曰。",
        "from": "X88n1646_036:0247a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔燕京被圍。",
        "from": "X88n1646_036:0247a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "絕粒六十日。",
        "from": "X88n1646_036:0247a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予守職如平常。",
        "from": "X88n1646_036:0247a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及扈從西征六萬餘里。",
        "from": "X88n1646_036:0247a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備歷險阻而志不少沮。",
        "from": "X88n1646_036:0247a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跨崑崙瞰瀚海而志不加大。",
        "from": "X88n1646_036:0247a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖汪洋法海涵養之效有如此也。",
        "from": "X88n1646_036:0247a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞自題其象曰。",
        "from": "X88n1646_036:0247a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別來十年五歲。",
        "from": "X88n1646_036:0247a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依舊一模一樣。",
        "from": "X88n1646_036:0247a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髭髯垂到腰間。",
        "from": "X88n1646_036:0247a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙眉儼然眼上。",
        "from": "X88n1646_036:0247a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龜毛錐子畫空虗。",
        "from": "X88n1646_036:0247a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫破湛然閒伎倆。",
        "from": "X88n1646_036:0247a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "X88n1646_036:0247a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有髮禪僧。",
        "from": "X88n1646_036:0247a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無名居士。",
        "from": "X88n1646_036:0247a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人道甚似。",
        "from": "X88n1646_036:0247a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我道便是。",
        "from": "X88n1646_036:0247a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵塵剎剎露全身。",
        "from": "X88n1646_036:0247a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紙上毫端何處避。",
        "from": "X88n1646_036:0247a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當西征時。",
        "from": "X88n1646_036:0247a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有司奏五臺等僧徒有能呪術及嫺武略者可部以從軍。",
        "from": "X88n1646_036:0247a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿止之曰。",
        "from": "X88n1646_036:0247a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋氏高行者。",
        "from": "X88n1646_036:0247a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必守不殺戒。",
        "from": "X88n1646_036:0247a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉慈忍行。",
        "from": "X88n1646_036:0247a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故有危身不證鵝珠。",
        "from": "X88n1646_036:0247a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守死不拔生草者。",
        "from": "X88n1646_036:0247a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用之從軍。",
        "from": "X88n1646_036:0247a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈其宜哉。",
        "from": "X88n1646_036:0247a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其不循法律者。",
        "from": "X88n1646_036:0247a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必無志行。",
        "from": "X88n1646_036:0247a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在彼既違佛旨。",
        "from": "X88n1646_036:0247a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在此豈忠王事。",
        "from": "X88n1646_036:0247a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故皆不可以從軍也。",
        "from": "X88n1646_036:0247a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃止。",
        "from": "X88n1646_036:0247a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大夫蕭守中曰。",
        "from": "X88n1646_036:0247a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門不征不役。",
        "from": "X88n1646_036:0247a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安坐而食。",
        "from": "X88n1646_036:0247a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耗國累民。",
        "from": "X88n1646_036:0247a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必此類矣。",
        "from": "X88n1646_036:0247a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請除之。",
        "from": "X88n1646_036:0247a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿曰。",
        "from": "X88n1646_036:0247a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人之生也。",
        "from": "X88n1646_036:0247a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有天命焉。",
        "from": "X88n1646_036:0247a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人力所不能予奪者也。",
        "from": "X88n1646_036:0247a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世有辛苦而飢餓者。",
        "from": "X88n1646_036:0247a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有安逸而飽足者。",
        "from": "X88n1646_036:0247a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修短苦樂壽夭窮通萬狀不齊。",
        "from": "X88n1646_036:0247b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖孔明之智。",
        "from": "X88n1646_036:0247b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "項羽之勇。",
        "from": "X88n1646_036:0247b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏回之賢。",
        "from": "X88n1646_036:0247b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼父之聖。",
        "from": "X88n1646_036:0247b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不能移其毫髮。",
        "from": "X88n1646_036:0247b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈彼沙門能窮吾民。",
        "from": "X88n1646_036:0247b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耗吾國耶。",
        "from": "X88n1646_036:0247b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故萬世之在天下。",
        "from": "X88n1646_036:0247b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天與則生。",
        "from": "X88n1646_036:0247b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天奪則死。",
        "from": "X88n1646_036:0247b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門亦天地間一物耳。",
        "from": "X88n1646_036:0247b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其亦天養之也。",
        "from": "X88n1646_036:0247b04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天且宥之。",
        "from": "X88n1646_036:0247b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子獨不容。",
        "from": "X88n1646_036:0247b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隘亦甚矣。",
        "from": "X88n1646_036:0247b05_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太宗崩。",
        "from": "X88n1646_036:0247b05_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇后稱制。",
        "from": "X88n1646_036:0247b05_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任用奧都剌合蠻。",
        "from": "X88n1646_036:0247b06_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿屢諫不聽。",
        "from": "X88n1646_036:0247b06_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋以疾卒。",
        "from": "X88n1646_036:0247b06_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至順初贈太師。",
        "from": "X88n1646_036:0247b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "追封廣寧王。",
        "from": "X88n1646_036:0247b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡文正(元史．湛然居士集．清凉通傳)。",
        "from": "X88n1646_036:0247b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國寶名安藏。",
        "from": "X88n1646_036:0247b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏兀人。",
        "from": "X88n1646_036:0247b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世家別石八里。",
        "from": "X88n1646_036:0247b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自號龍宮老人。",
        "from": "X88n1646_036:0247b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父腆藏帖材。",
        "from": "X88n1646_036:0247b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護廸方燕坐作觀音觀。",
        "from": "X88n1646_036:0247b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽有人抱童子付之。",
        "from": "X88n1646_036:0247b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而其母有娠。",
        "from": "X88n1646_036:0247b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及產紅光發於屋。",
        "from": "X88n1646_036:0247b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生五歲甞一臥三晝夜始寤。",
        "from": "X88n1646_036:0247b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問其故。",
        "from": "X88n1646_036:0247b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云適見文殊為我說法。",
        "from": "X88n1646_036:0247b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺久耳。",
        "from": "X88n1646_036:0247b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而從父兄問經義。",
        "from": "X88n1646_036:0247b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即開解。",
        "from": "X88n1646_036:0247b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九歲始從師力學。",
        "from": "X88n1646_036:0247b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三能默誦俱舍論。",
        "from": "X88n1646_036:0247b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至十五而孔釋之書皆貫穿矣。",
        "from": "X88n1646_036:0247b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九被徵入朝。",
        "from": "X88n1646_036:0247b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛法見知世祖。",
        "from": "X88n1646_036:0247b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進寶藏論元演集。",
        "from": "X88n1646_036:0247b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深被嘉歎。",
        "from": "X88n1646_036:0247b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因勸上宜親經史。",
        "from": "X88n1646_036:0247b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以知古今治亂之由。",
        "from": "X88n1646_036:0247b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正心術以示天下向背之道。",
        "from": "X88n1646_036:0247b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂譯尚書無逸篇．貞觀政要申鑒各一通以獻。",
        "from": "X88n1646_036:0247b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授翰林學士知制誥。",
        "from": "X88n1646_036:0247b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋商議中書省事。",
        "from": "X88n1646_036:0247b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每賜對必以開言路。",
        "from": "X88n1646_036:0247b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣聖慮。",
        "from": "X88n1646_036:0247b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎刑節用為言。",
        "from": "X88n1646_036:0247b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世祖未甞不稱善。",
        "from": "X88n1646_036:0247b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至元三十年夏五月丁丑方宴居。",
        "from": "X88n1646_036:0247b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽端坐若禪定者。",
        "from": "X88n1646_036:0247b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右扶就寢。",
        "from": "X88n1646_036:0247b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至夜聞異香馥郁。",
        "from": "X88n1646_036:0247b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即視之。",
        "from": "X88n1646_036:0247b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已薨矣。",
        "from": "X88n1646_036:0247b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大星隕於庭。",
        "from": "X88n1646_036:0247b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓相凝室不散。",
        "from": "X88n1646_036:0247b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃之見白毫光出西南去。",
        "from": "X88n1646_036:0247b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辛巳闍維於國西南門之外。",
        "from": "X88n1646_036:0247b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得五色舍利不可勝計。",
        "from": "X88n1646_036:0247b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔收其遺書。",
        "from": "X88n1646_036:0247b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得歌詩偈贊頌雜文數十卷。",
        "from": "X88n1646_036:0247b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命刻板行世。",
        "from": "X88n1646_036:0247b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延祐二年贈太師。",
        "from": "X88n1646_036:0247b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "封秦國公。",
        "from": "X88n1646_036:0247b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諡文靖(程鉅夫雪樓集)。",
        "from": "X88n1646_036:0247b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_036:0247c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉卿於元佐。",
        "from": "X88n1646_036:0247c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命功第一。",
        "from": "X88n1646_036:0247c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "察其本。",
        "from": "X88n1646_036:0247c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知其所養者裕矣。",
        "from": "X88n1646_036:0247c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國寶出入儒釋間。",
        "from": "X88n1646_036:0247c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀其言論風旨。",
        "from": "X88n1646_036:0247c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殆亦晉卿之亞。",
        "from": "X88n1646_036:0247c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與而元史逸之。",
        "from": "X88n1646_036:0247c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其遺書不可得而見矣。",
        "from": "X88n1646_036:0247c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為著其大概如此云。",
        "from": "X88n1646_036:0247c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_036:0247c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敘學佛得力處曰息心參究。",
        "from": "X88n1646_036:0247c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得手時工夫也。",
        "from": "X88n1646_036:0247c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰涵養之效。",
        "from": "X88n1646_036:0247c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得手時工夫也。",
        "from": "X88n1646_036:0247c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大抵參究之功須要外屏諸緣方易得手。",
        "from": "X88n1646_036:0247c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得手後全要涵養到純一地步方好。",
        "from": "X88n1646_036:0247c08_6",
        "context_with_next_sentence": false
    }
]