[
    {
        "source_sentence": "大般涅槃經集解卷第三十三",
        "from": "T37n1763_033:0490a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣釋前七種實諦義",
        "from": "T37n1763_033:0490a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣出外道所執常樂我淨",
        "from": "T37n1763_033:0490a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖行品之第七",
        "from": "T37n1763_033:0490a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利白佛言世尊(至)一切顛倒不名為實。",
        "from": "T37n1763_033:0490a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0490a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上以問真。",
        "from": "T37n1763_033:0490a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次問四倒。",
        "from": "T37n1763_033:0490a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不入四諦。",
        "from": "T37n1763_033:0490a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實諦攝法不盡。",
        "from": "T37n1763_033:0490a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下訖佛說亦爾。",
        "from": "T37n1763_033:0490a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一道以下。",
        "from": "T37n1763_033:0490a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不難攝實不周。",
        "from": "T37n1763_033:0490a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃則說實不濫耳。",
        "from": "T37n1763_033:0490a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_033:0490a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來明四諦。",
        "from": "T37n1763_033:0490a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆名為實諦。",
        "from": "T37n1763_033:0490a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似如顛倒虛妄。",
        "from": "T37n1763_033:0490a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非苦集諦所攝。",
        "from": "T37n1763_033:0490a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以發此問也。",
        "from": "T37n1763_033:0490b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋第二境實也。",
        "from": "T37n1763_033:0490b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問四諦中有倒。",
        "from": "T37n1763_033:0490b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不若有者。",
        "from": "T37n1763_033:0490b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何言實。",
        "from": "T37n1763_033:0490b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若四諦無。",
        "from": "T37n1763_033:0490b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則四諦之外。",
        "from": "T37n1763_033:0490b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應更有法也。",
        "from": "T37n1763_033:0490b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告文殊師利一切顛倒(至)非不是苦即是苦也。",
        "from": "T37n1763_033:0490b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法瑤曰。",
        "from": "T37n1763_033:0490b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心想而論。",
        "from": "T37n1763_033:0490b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為顛倒。",
        "from": "T37n1763_033:0490b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以性而觀。",
        "from": "T37n1763_033:0490b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則入苦諦也。",
        "from": "T37n1763_033:0490b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應云皆入苦集諦也。",
        "from": "T37n1763_033:0490b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今但言入苦者。",
        "from": "T37n1763_033:0490b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據一邊。",
        "from": "T37n1763_033:0490b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利言如佛所說(至)所斷除故故名實諦。",
        "from": "T37n1763_033:0490b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋第三智實也。",
        "from": "T37n1763_033:0490b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若智所緣境。",
        "from": "T37n1763_033:0490b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所契當。",
        "from": "T37n1763_033:0490b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是虛妄也。",
        "from": "T37n1763_033:0490b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利言如佛所說(至)是變易法名為不實。",
        "from": "T37n1763_033:0490b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋第四乘實。",
        "from": "T37n1763_033:0490b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘緣中忘相。",
        "from": "T37n1763_033:0490b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故實。",
        "from": "T37n1763_033:0490b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小乘執相。",
        "from": "T37n1763_033:0490b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不實。",
        "from": "T37n1763_033:0490b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利言如佛所說(至)如是虛妄名為魔說。",
        "from": "T37n1763_033:0490b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0490b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋第五教實也。",
        "from": "T37n1763_033:0490b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但佛說必能利物。",
        "from": "T37n1763_033:0490b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔說生縛。",
        "from": "T37n1763_033:0490b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故非實也。",
        "from": "T37n1763_033:0490b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利言如佛所說(至)彼無一道清淨無二。",
        "from": "T37n1763_033:0490b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_033:0490b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非滅生滅想者。",
        "from": "T37n1763_033:0490b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂計非想。",
        "from": "T37n1763_033:0490b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為涅槃果。",
        "from": "T37n1763_033:0490b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八禪為因也。",
        "from": "T37n1763_033:0490b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋第六一因之實。",
        "from": "T37n1763_033:0490b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利言如佛所說(至)亦復說言諸行是常。",
        "from": "T37n1763_033:0490b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_033:0490b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂佛之言。",
        "from": "T37n1763_033:0490b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常人所不見。",
        "from": "T37n1763_033:0490b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道計陰為常。",
        "from": "T37n1763_033:0490b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "交驗所計。",
        "from": "T37n1763_033:0490b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故應有也。",
        "from": "T37n1763_033:0490b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋第七果實也。",
        "from": "T37n1763_033:0490b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊執外道所計。",
        "from": "T37n1763_033:0490b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷此四法。",
        "from": "T37n1763_033:0490b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語在其下。",
        "from": "T37n1763_033:0490b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡二十三句也。",
        "from": "T37n1763_033:0490b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何是常可意不可意(至)若是常者即是實諦。",
        "from": "T37n1763_033:0490b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以七事證常也。",
        "from": "T37n1763_033:0490b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊有諸外道復言有樂(至)上中下故當知有樂。",
        "from": "T37n1763_033:0490b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0490b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五事證樂也。",
        "from": "T37n1763_033:0490b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊有諸外道復言有淨(至)以是義故名之為淨。",
        "from": "T37n1763_033:0490b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以三事證淨也。",
        "from": "T37n1763_033:0490c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊有諸外道復言有我(至)亦得說言我有真諦。",
        "from": "T37n1763_033:0490c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以八事證我也。",
        "from": "T37n1763_033:0490c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善男子若有沙門(至)諸行若常無有是處。",
        "from": "T37n1763_033:0490c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0490c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將欲破執。",
        "from": "T37n1763_033:0490c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答彼問。",
        "from": "T37n1763_033:0490c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以二十事。",
        "from": "T37n1763_033:0490c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訶外道所計。",
        "from": "T37n1763_033:0490c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我觀諸行悉皆無常(至)無有一法不從緣生。",
        "from": "T37n1763_033:0490c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0490c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既言是行。",
        "from": "T37n1763_033:0490c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理自無常。",
        "from": "T37n1763_033:0490c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法從緣者。",
        "from": "T37n1763_033:0490c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證諸行無常也。",
        "from": "T37n1763_033:0490c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法從緣起。",
        "from": "T37n1763_033:0490c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無今有。",
        "from": "T37n1763_033:0490c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名生。",
        "from": "T37n1763_033:0490c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已有還無。",
        "from": "T37n1763_033:0490c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為滅也。",
        "from": "T37n1763_033:0490c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者。",
        "from": "T37n1763_033:0490c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心以所緣為本。",
        "from": "T37n1763_033:0490c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不稱所緣故。",
        "from": "T37n1763_033:0490c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即謂本無也。",
        "from": "T37n1763_033:0490c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而心自橫生。",
        "from": "T37n1763_033:0490c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是今有也。",
        "from": "T37n1763_033:0490c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫生無根。",
        "from": "T37n1763_033:0490c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起便自滅。",
        "from": "T37n1763_033:0490c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因既如此。",
        "from": "T37n1763_033:0490c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果亦應然。",
        "from": "T37n1763_033:0490c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "T37n1763_033:0490c13_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因無常故色無常。",
        "from": "T37n1763_033:0490c13_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此其證也。",
        "from": "T37n1763_033:0490c13_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_033:0490c14_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道所計。",
        "from": "T37n1763_033:0490c14_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得離陰。",
        "from": "T37n1763_033:0490c14_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一法上。",
        "from": "T37n1763_033:0490c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不從緣。",
        "from": "T37n1763_033:0490c15_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛性不從緣生。",
        "from": "T37n1763_033:0490c15_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非三世攝也。",
        "from": "T37n1763_033:0490c15_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子佛性無生無滅(至)之所攝持是故名常。",
        "from": "T37n1763_033:0490c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0490c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說正因性也。",
        "from": "T37n1763_033:0490c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦從緣見。",
        "from": "T37n1763_033:0490c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非從緣生也。",
        "from": "T37n1763_033:0490c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者。",
        "from": "T37n1763_033:0490c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行緣求理。",
        "from": "T37n1763_033:0490c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理非本無今有。",
        "from": "T37n1763_033:0490c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂不生也。",
        "from": "T37n1763_033:0490c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念常求。",
        "from": "T37n1763_033:0490c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂不滅也。",
        "from": "T37n1763_033:0490c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既非生滅。",
        "from": "T37n1763_033:0490c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無去無來。",
        "from": "T37n1763_033:0490c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無三世。",
        "from": "T37n1763_033:0490c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因不橫起。",
        "from": "T37n1763_033:0490c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故非作也。",
        "from": "T37n1763_033:0490c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於緣求解。",
        "from": "T37n1763_033:0490c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非不作也。",
        "from": "T37n1763_033:0490c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以一法為因。",
        "from": "T37n1763_033:0490c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故非名也。",
        "from": "T37n1763_033:0490c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說為正因。",
        "from": "T37n1763_033:0490c21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非無名也。",
        "from": "T37n1763_033:0490c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非名非色。",
        "from": "T37n1763_033:0490c22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至陰界不攝。",
        "from": "T37n1763_033:0490c22_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證無名也。",
        "from": "T37n1763_033:0490c22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰界有壞。",
        "from": "T37n1763_033:0490c23_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而佛性不滅不攝也。",
        "from": "T37n1763_033:0490c23_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故稱常者。",
        "from": "T37n1763_033:0490c23_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二義常。",
        "from": "T37n1763_033:0490c24_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一必定得果。",
        "from": "T37n1763_033:0490c24_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二因不可滅。",
        "from": "T37n1763_033:0490c24_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子佛性即是如來(至)悉是妄語無有真諦。",
        "from": "T37n1763_033:0490c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0490c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0490c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見性成佛。",
        "from": "T37n1763_033:0490c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即性為佛也。",
        "from": "T37n1763_033:0490c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來即法者。",
        "from": "T37n1763_033:0490c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法即性空。",
        "from": "T37n1763_033:0490c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性空即法。",
        "from": "T37n1763_033:0490c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法即佛性也。",
        "from": "T37n1763_033:0490c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛性是有。",
        "from": "T37n1763_033:0490c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性空是無。",
        "from": "T37n1763_033:0490c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛見有無名覺也。",
        "from": "T37n1763_033:0490c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即是法法即是常者。",
        "from": "T37n1763_033:0490c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通計二句。",
        "from": "T37n1763_033:0490c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見常故常。",
        "from": "T37n1763_033:0490c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來即僧者。",
        "from": "T37n1763_033:0490c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見常而常和合也。",
        "from": "T37n1763_033:0491a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和合是僧義。",
        "from": "T37n1763_033:0491a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師法是弟子義。",
        "from": "T37n1763_033:0491a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧即是常者。",
        "from": "T37n1763_033:0491a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師常故得常也。",
        "from": "T37n1763_033:0491a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不知三寶是常。",
        "from": "T37n1763_033:0491a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而言常者。",
        "from": "T37n1763_033:0491a03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名妄語也。",
        "from": "T37n1763_033:0491a03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸凡夫先見瓶衣車乘舍宅(至)當知其實非是常也。",
        "from": "T37n1763_033:0491a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0491a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0491a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證不見者。",
        "from": "T37n1763_033:0491a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是妄語也。",
        "from": "T37n1763_033:0491a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有為皆是無常者。",
        "from": "T37n1763_033:0491a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將就有為。",
        "from": "T37n1763_033:0491a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說無常義。",
        "from": "T37n1763_033:0491a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更以有無相對也。",
        "from": "T37n1763_033:0491a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_033:0491a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉其計常中第七句。",
        "from": "T37n1763_033:0491a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言前後相續相似語。",
        "from": "T37n1763_033:0491a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其體念念生滅。",
        "from": "T37n1763_033:0491a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有常耶。",
        "from": "T37n1763_033:0491a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0491a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計云先見瓶衣等。",
        "from": "T37n1763_033:0491a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後時亦識。",
        "from": "T37n1763_033:0491a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知有一神我常故常。",
        "from": "T37n1763_033:0491a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故如此也。",
        "from": "T37n1763_033:0491a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下去唯有兩難。",
        "from": "T37n1763_033:0491a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初云。",
        "from": "T37n1763_033:0491a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝心若常。",
        "from": "T37n1763_033:0491a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應同佛一切智。",
        "from": "T37n1763_033:0491a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用常自無移種。",
        "from": "T37n1763_033:0491a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識對塵時。",
        "from": "T37n1763_033:0491a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應獨緣一切法。",
        "from": "T37n1763_033:0491a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今不爾。",
        "from": "T37n1763_033:0491a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念生滅。",
        "from": "T37n1763_033:0491a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣此捨彼。",
        "from": "T37n1763_033:0491a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知心是無常。",
        "from": "T37n1763_033:0491a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二難將境以決心。",
        "from": "T37n1763_033:0491a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心若果從緣生而常者。",
        "from": "T37n1763_033:0491a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應恒守一法。",
        "from": "T37n1763_033:0491a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得改心易緣也。",
        "from": "T37n1763_033:0491a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以然。",
        "from": "T37n1763_033:0491a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心既是常。",
        "from": "T37n1763_033:0491a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應常。",
        "from": "T37n1763_033:0491a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀無常不得。",
        "from": "T37n1763_033:0491a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復緣空無我。",
        "from": "T37n1763_033:0491a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今心遍緣一切境。",
        "from": "T37n1763_033:0491a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知無常也。",
        "from": "T37n1763_033:0491a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子一切有為皆是無常(至)無為者即是常。",
        "from": "T37n1763_033:0491a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0491a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0491a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將就有為。",
        "from": "T37n1763_033:0491a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說無常義。",
        "from": "T37n1763_033:0491a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更以有無相對。",
        "from": "T37n1763_033:0491a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子有為之法凡有二種(至)色法者地水火風。",
        "from": "T37n1763_033:0491a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0491a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰。",
        "from": "T37n1763_033:0491a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向但言無常。",
        "from": "T37n1763_033:0491a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今出其法。",
        "from": "T37n1763_033:0491a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不過色心也。",
        "from": "T37n1763_033:0491a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子心名無常(至)乃至意識異亦如是。",
        "from": "T37n1763_033:0491a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0491a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0491a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心攀境而起。",
        "from": "T37n1763_033:0491a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後相應。",
        "from": "T37n1763_033:0491a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共了一緣。",
        "from": "T37n1763_033:0491a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此總說。",
        "from": "T37n1763_033:0491a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下別說也。",
        "from": "T37n1763_033:0491a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識性異者。",
        "from": "T37n1763_033:0491a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識緣現在。",
        "from": "T37n1763_033:0491a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意識緣去來。",
        "from": "T37n1763_033:0491a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下境界相應亦爾。",
        "from": "T37n1763_033:0491a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識應獨緣一切者。",
        "from": "T37n1763_033:0491a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識不滅。",
        "from": "T37n1763_033:0491a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行在諸根中。",
        "from": "T37n1763_033:0491a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在耳之時。",
        "from": "T37n1763_033:0491a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦應見色。",
        "from": "T37n1763_033:0491a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識性不異故。",
        "from": "T37n1763_033:0491a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若爾。",
        "from": "T37n1763_033:0491a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應緣一切法。",
        "from": "T37n1763_033:0491a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今不爾者。",
        "from": "T37n1763_033:0491a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫倒計為常。",
        "from": "T37n1763_033:0491b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子壞諸行因緣故(至)諸憶念法不應忘失。",
        "from": "T37n1763_033:0491b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0491b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0491b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說無漏行異無漏。",
        "from": "T37n1763_033:0491b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅諸行也。",
        "from": "T37n1763_033:0491b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂聲聞心性異。",
        "from": "T37n1763_033:0491b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至外道心者。",
        "from": "T37n1763_033:0491b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上明苦樂煩惱。",
        "from": "T37n1763_033:0491b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說佛弟子。",
        "from": "T37n1763_033:0491b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說外道。",
        "from": "T37n1763_033:0491b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能分別諸色。",
        "from": "T37n1763_033:0491b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正以了為心。",
        "from": "T37n1763_033:0491b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了青不可了黃。",
        "from": "T37n1763_033:0491b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼識不能具取色也。",
        "from": "T37n1763_033:0491b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子心若常者(至)有別異故當知無常。",
        "from": "T37n1763_033:0491b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0491b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰。",
        "from": "T37n1763_033:0491b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此以下。",
        "from": "T37n1763_033:0491b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并答計常中第四五六三句也。",
        "from": "T37n1763_033:0491b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就色心別相。",
        "from": "T37n1763_033:0491b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣其執也。",
        "from": "T37n1763_033:0491b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子我今於此非色法中(至)先問是事於彼已答。",
        "from": "T37n1763_033:0491b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案。",
        "from": "T37n1763_033:0491b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧亮曰。",
        "from": "T37n1763_033:0491b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下略說內外色性。",
        "from": "T37n1763_033:0491b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無今有。",
        "from": "T37n1763_033:0491b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已有還無。",
        "from": "T37n1763_033:0491b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常所有內色異也。",
        "from": "T37n1763_033:0491b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第三十三",
        "from": "T37n1763_033:0491b14_0",
        "context_with_next_sentence": false
    }
]