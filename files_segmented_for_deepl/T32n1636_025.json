[
    {
        "source_sentence": "大乘集菩薩學論卷第二十五",
        "from": "T32n1636_025:0142a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1636_025:0142a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿宣梵大師賜紫",
        "from": "T32n1636_025:0142a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣日稱等奉　詔譯",
        "from": "T32n1636_025:0142a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念三寶品第十八之四",
        "from": "T32n1636_025:0142a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_025:0142a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂諸菩薩或以因緣遇諸難事。",
        "from": "T32n1636_025:0142a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念對治不生驚怖。",
        "from": "T32n1636_025:0142a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如般若經說。",
        "from": "T32n1636_025:0142a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次舍利子。",
        "from": "T32n1636_025:0142a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩摩訶薩設於惡獸難中。",
        "from": "T32n1636_025:0142a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生驚惱亦無怖畏。",
        "from": "T32n1636_025:0142a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故是菩薩即作是念。",
        "from": "T32n1636_025:0142a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當利益諸眾生故一切皆捨。",
        "from": "T32n1636_025:0142a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸惡獸欲噉我者。",
        "from": "T32n1636_025:0142a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當施與速得圓滿施波羅蜜。",
        "from": "T32n1636_025:0142a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我當成阿耨多羅三藐三菩提時。",
        "from": "T32n1636_025:0142a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土清淨不聞諸惡蟲獸之名。",
        "from": "T32n1636_025:0142a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次舍利子。",
        "from": "T32n1636_025:0142a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩摩訶薩於怨賊難中不生驚惱亦無怖畏。",
        "from": "T32n1636_025:0142a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1636_025:0142a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩若己所有皆悉能捐。",
        "from": "T32n1636_025:0142a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作是念。",
        "from": "T32n1636_025:0142a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸怨賊來欲所須。",
        "from": "T32n1636_025:0142a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當與之。",
        "from": "T32n1636_025:0142a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至劫取斷我命根。",
        "from": "T32n1636_025:0142a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身語意業亦無瞋恨。",
        "from": "T32n1636_025:0142a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速得圓滿戒波羅蜜。",
        "from": "T32n1636_025:0142a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及得具足忍波羅蜜。",
        "from": "T32n1636_025:0142a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我當成阿耨多羅三藐三菩提時。",
        "from": "T32n1636_025:0142a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土清淨不聞如是怨賊之名。",
        "from": "T32n1636_025:0142a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次舍利子。",
        "from": "T32n1636_025:0142a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩摩訶薩於渴乏難中。",
        "from": "T32n1636_025:0142a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無怖畏。",
        "from": "T32n1636_025:0142a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1636_025:0142a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩得法利益而無憂惱。",
        "from": "T32n1636_025:0142a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即作是念。",
        "from": "T32n1636_025:0142a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當為一切眾生宣說法要斷除渴愛。",
        "from": "T32n1636_025:0142a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設我此身為渴所逼趣命終者。",
        "from": "T32n1636_025:0142a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於後世起大悲心。",
        "from": "T32n1636_025:0142a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗟此眾生薄福德故。",
        "from": "T32n1636_025:0142a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還復生此無水難中。",
        "from": "T32n1636_025:0142a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令修正行具足勝惠。",
        "from": "T32n1636_025:0142a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能圓滿精進波羅蜜多。",
        "from": "T32n1636_025:0142a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我當得阿耨多羅三藐三菩提時。",
        "from": "T32n1636_025:0142a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土清淨不聞如是渴乏之名。",
        "from": "T32n1636_025:0142a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中眾生具足福德。",
        "from": "T32n1636_025:0142a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然而有八功德水。",
        "from": "T32n1636_025:0142a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次舍利子。",
        "from": "T32n1636_025:0142b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩摩訶薩於飢饉難中。",
        "from": "T32n1636_025:0142b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生驚怖。",
        "from": "T32n1636_025:0142b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1636_025:0142b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩被精進鎧堅固無懈。",
        "from": "T32n1636_025:0142b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是念。",
        "from": "T32n1636_025:0142b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此眾生受飢饉苦深可憐愍。",
        "from": "T32n1636_025:0142b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我當成阿耨多羅三藐三菩提。",
        "from": "T32n1636_025:0142b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國土無有飢饉之名。",
        "from": "T32n1636_025:0142b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所化眾生適悅安隱。",
        "from": "T32n1636_025:0142b05_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如忉利天自然快樂。",
        "from": "T32n1636_025:0142b06_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所欲隨心即現。",
        "from": "T32n1636_025:0142b06_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命堅固安住寂靜。",
        "from": "T32n1636_025:0142b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_025:0142b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是所作。",
        "from": "T32n1636_025:0142b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能增長廣大福因最上境界。",
        "from": "T32n1636_025:0142b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦同清淨經中所說。",
        "from": "T32n1636_025:0142b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以法施不生希望所獲勝報。",
        "from": "T32n1636_025:0142b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見深心教戒經。",
        "from": "T32n1636_025:0142b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人不希名聞財利。",
        "from": "T32n1636_025:0142b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以法施獲二十種慈心功德。",
        "from": "T32n1636_025:0142b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者安住正念。",
        "from": "T32n1636_025:0142b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者能生覺悟三者發趣勝道。",
        "from": "T32n1636_025:0142b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者任持諸善。",
        "from": "T32n1636_025:0142b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者增長惠命。",
        "from": "T32n1636_025:0142b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者達出世智。",
        "from": "T32n1636_025:0142b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者除貪過失。",
        "from": "T32n1636_025:0142b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者除瞋過失。",
        "from": "T32n1636_025:0142b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者除癡過失。",
        "from": "T32n1636_025:0142b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者魔不得便。",
        "from": "T32n1636_025:0142b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一者諸佛加持。",
        "from": "T32n1636_025:0142b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二者諸天守護容色光澤。",
        "from": "T32n1636_025:0142b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三者非人惡友不得其便。",
        "from": "T32n1636_025:0142b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四者善友知識常所愛敬。",
        "from": "T32n1636_025:0142b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五者所言真實。",
        "from": "T32n1636_025:0142b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六者得無所畏。",
        "from": "T32n1636_025:0142b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七者意常悅豫。",
        "from": "T32n1636_025:0142b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八者善名流布。",
        "from": "T32n1636_025:0142b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九者明記無忘。",
        "from": "T32n1636_025:0142b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十者常樂法施此說是名慈心功德。",
        "from": "T32n1636_025:0142b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又般若經云。",
        "from": "T32n1636_025:0142b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難。",
        "from": "T32n1636_025:0142b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聲聞人。",
        "from": "T32n1636_025:0142b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以聲聞法普為三千大千世界一切眾生如其所證而為演說。",
        "from": "T32n1636_025:0142b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉令獲得阿羅漢果。",
        "from": "T32n1636_025:0142b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1636_025:0142b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩摩訶薩。",
        "from": "T32n1636_025:0142b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以般若波羅蜜多相應句義。",
        "from": "T32n1636_025:0142b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一眾生開示演說過前三千大千世界一切眾生證阿羅漢所得功德。",
        "from": "T32n1636_025:0142b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復於彼諸阿羅漢積集布施持戒功德。",
        "from": "T32n1636_025:0142b26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於意云何。",
        "from": "T32n1636_025:0142b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為多不阿難白言。",
        "from": "T32n1636_025:0142b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚多世尊。",
        "from": "T32n1636_025:0142b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚多善逝。",
        "from": "T32n1636_025:0142b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T32n1636_025:0142b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1636_025:0142b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼福雖多不如菩薩以此般若波羅蜜多相應法門為他演說其福勝彼。",
        "from": "T32n1636_025:0142b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又菩薩摩訶薩於此般若波羅蜜多甚深法門。",
        "from": "T32n1636_025:0142c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能一日中為人分別。",
        "from": "T32n1636_025:0142c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃至一時一刻一須臾頃善宣說者。",
        "from": "T32n1636_025:0142c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T32n1636_025:0142c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼菩薩如是法施。",
        "from": "T32n1636_025:0142c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以聲聞緣覺所有善根而相比喻。",
        "from": "T32n1636_025:0142c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T32n1636_025:0142c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是菩薩摩訶薩於阿耨多羅三藐三菩提得不退轉故。",
        "from": "T32n1636_025:0142c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以法施。",
        "from": "T32n1636_025:0142c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如妙法蓮華經偈云。",
        "from": "T32n1636_025:0142c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　菩薩有時　　入於靜室　　以正憶念　隨義觀法　　菩薩常樂　　安隱說法　於清淨地　　而施床座　　以油塗身　澡浴塵穢　　著新淨衣　　內外俱淨　安處法座　　隨問為說　　若有比丘　及比丘尼　　除懶墮意　　及懈怠想　離諸憂惱　　慈心說法　　晝夜常說　無上道教　　以諸因緣　　無量譬喻　開示眾生　　咸令歡喜　　衣服臥具　飲食醫藥　　而於其中　　無所希望　但一心念　　說法因緣　　願成佛道　令眾亦爾　　是則大利　　安樂供養是經復說。",
        "from": "T32n1636_025:0142c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以順法故不多不少。",
        "from": "T32n1636_025:0142c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至深愛法者亦不為多說。",
        "from": "T32n1636_025:0142c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又月燈經偈云。",
        "from": "T32n1636_025:0142c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若耆宿請問　　欲求於法施",
        "from": "T32n1636_025:0142c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　應先謂彼言　　我學習不廣",
        "from": "T32n1636_025:0142c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又復作是說　　尊者甚聰惠",
        "from": "T32n1636_025:0142c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　豈於大德前　　而能輒宣說",
        "from": "T32n1636_025:0142c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　說時勿倉卒　　當擇器非器",
        "from": "T32n1636_025:0142c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　既審其機已　　不請亦為說",
        "from": "T32n1636_025:0142c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若於大眾中　　見諸毀禁者",
        "from": "T32n1636_025:0142c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　勿復歎持戒　　當歎施等行",
        "from": "T32n1636_025:0142c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若見少欲者　　與持戒相應",
        "from": "T32n1636_025:0143a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　起於大悲心　　讚少欲持戒",
        "from": "T32n1636_025:0143a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得彼勝儔侶　　便可讚持戒",
        "from": "T32n1636_025:0143a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_025:0143a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是法師。",
        "from": "T32n1636_025:0143a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當澡浴著新淨衣。",
        "from": "T32n1636_025:0143a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以慈脩身為眾演說。",
        "from": "T32n1636_025:0143a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切魔羅不得其便。",
        "from": "T32n1636_025:0143a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見海意經陀羅尼。",
        "from": "T32n1636_025:0143a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛[寧*也](切身)他(引一)設彌(引二)設摩嚩底(三)設彌多設咄嚕(二合四)盎酤哩(引五)摩(引)囉[口*爾]底(六)葛囉(引)膩(引七)枳(引)踰哩(引八)烏朅嚩底(九)烏呼(引)葛野底(十)尾輸(引)馱儞(十一)儞哩摩(二合)梨(引十二)摩羅(引)鉢那曳(引十三)烏渴哩(引十四)渴嚕(引)誐囉(二合)細(引十五)鉢囉(二合)薩儞(引十六)係(引)目契(引十七)阿(引)目契(引十八)設曳多(引)儞薩哩嚩(二合)怛囉(二合)誐囉(二合)賀滿馱那(引)儞(十九)屹哩(二合)係(引)多薩哩嚩(二合)波囉鉢囉(二合)嚩(引)禰那(二十)尾目訖多(二合引)摩(引)囉播(引)舍(二十一)塞他(二合引)必多(引)沒馱母捺囉(二合引二十二)三母捺伽(二合引)底多薩哩嚩(二合)摩囉(二十三)阿都黎多鉢捺鉢哩戍[亭*夜](切身引二十四)尾誐蹉底薩哩嚩(二合)摩(引)囉葛哩摩(二合引)尼(二十五)彼說法師。",
        "from": "T32n1636_025:0143a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此真言作持誦已。",
        "from": "T32n1636_025:0143a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "處于法座。",
        "from": "T32n1636_025:0143a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普觀眾會廣運慈心。",
        "from": "T32n1636_025:0143a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於己身起醫王想如法藥想。",
        "from": "T32n1636_025:0143a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於聽法者起病人想。",
        "from": "T32n1636_025:0143a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸如來起正士想。",
        "from": "T32n1636_025:0143a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於正法眼起久住想。",
        "from": "T32n1636_025:0143a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此真言現前施作於正理法如應為說。",
        "from": "T32n1636_025:0143a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時周匝百由旬內。",
        "from": "T32n1636_025:0143a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔天眾悉不能來作諸魔事。",
        "from": "T32n1636_025:0143a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設諸魔王至法會所。",
        "from": "T32n1636_025:0143a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不能作諸障難。",
        "from": "T32n1636_025:0143a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_025:0143a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是平等法施。",
        "from": "T32n1636_025:0143a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能增長大菩提心。",
        "from": "T32n1636_025:0143a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如寶篋經云。",
        "from": "T32n1636_025:0143a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利。",
        "from": "T32n1636_025:0143a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如林木枝葉繁茂。",
        "from": "T32n1636_025:0143a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆因四大而得生長。",
        "from": "T32n1636_025:0143a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利。",
        "from": "T32n1636_025:0143a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是菩薩以種種門集諸善根。",
        "from": "T32n1636_025:0143a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆攝在菩提心。",
        "from": "T32n1636_025:0143a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切智回向菩提以為增長。",
        "from": "T32n1636_025:0143a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T32n1636_025:0143b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩為欲廣大顯示修學佛之境界。",
        "from": "T32n1636_025:0143b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最初安住正念正知。",
        "from": "T32n1636_025:0143b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是則能成就正斷及不放逸謂由發起精進樂欲。",
        "from": "T32n1636_025:0143b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於未生惡不善法防護不起。",
        "from": "T32n1636_025:0143b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其已生惡不善法。",
        "from": "T32n1636_025:0143b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能永斷使令清淨。",
        "from": "T32n1636_025:0143b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未生善法令其發起。",
        "from": "T32n1636_025:0143b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已生善法更復增長。",
        "from": "T32n1636_025:0143b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於不放逸而常安住。",
        "from": "T32n1636_025:0143b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善法中此為根本。",
        "from": "T32n1636_025:0143b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如月燈經偈云。",
        "from": "T32n1636_025:0143b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如我所說諸善法　　謂戒聞捨及忍辱　以不放逸為根本　　是名善逝最勝財云何名放逸。",
        "from": "T32n1636_025:0143b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於邪教及惡朋友。",
        "from": "T32n1636_025:0143b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛妄推求而得生起。",
        "from": "T32n1636_025:0143b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人執持王所飲藥。",
        "from": "T32n1636_025:0143b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盛滿器中行險滑路。",
        "from": "T32n1636_025:0143b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人恐怖憂惱。",
        "from": "T32n1636_025:0143b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有放逸。",
        "from": "T32n1636_025:0143b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如來祕密經說。",
        "from": "T32n1636_025:0143b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何不放逸謂能最初調攝諸根。",
        "from": "T32n1636_025:0143b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼見色等不取於相不著於好。",
        "from": "T32n1636_025:0143b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃至意法亦然。",
        "from": "T32n1636_025:0143b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知是已皆不取著不生染愛常求出離。",
        "from": "T32n1636_025:0143b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於自心善調伏已。",
        "from": "T32n1636_025:0143b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能隨應攝護他心。",
        "from": "T32n1636_025:0143b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能息彼煩惱染愛。",
        "from": "T32n1636_025:0143b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名不放逸。",
        "from": "T32n1636_025:0143b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人信解不放逸法。",
        "from": "T32n1636_025:0143b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能隨順諸精進事。",
        "from": "T32n1636_025:0143b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復積集淨信功德。",
        "from": "T32n1636_025:0143b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由修淨信及不放逸精進法故。",
        "from": "T32n1636_025:0143b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能修作正念正知。",
        "from": "T32n1636_025:0143b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以正念正知故。",
        "from": "T32n1636_025:0143b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於一切菩提分法而不壞失。",
        "from": "T32n1636_025:0143b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若具淨信不放逸精進正念正知者。",
        "from": "T32n1636_025:0143b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能勤修深固之法。",
        "from": "T32n1636_025:0143b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩若於深固法中善了知者。",
        "from": "T32n1636_025:0143b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能於有於無如實覺了。",
        "from": "T32n1636_025:0143b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於世俗諦中說眼等為有。",
        "from": "T32n1636_025:0143b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼經偈云。",
        "from": "T32n1636_025:0143b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常不放逸甘露法　　利眾生發菩提心　深固寂靜心亦然　　諸樂根本無所取論曰。",
        "from": "T32n1636_025:0143b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能積集諸相應行。",
        "from": "T32n1636_025:0143b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於自他增長勝福。",
        "from": "T32n1636_025:0143b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而說頌曰。",
        "from": "T32n1636_025:0143c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　學自他平等　　堅固菩提心",
        "from": "T32n1636_025:0143c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　對自成於他　　展轉無有實",
        "from": "T32n1636_025:0143c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦猶立彼岸　　由此而對待",
        "from": "T32n1636_025:0143c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼既本來無　　我性何所有",
        "from": "T32n1636_025:0143c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若苦不防護　　則為苦所著",
        "from": "T32n1636_025:0143c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是行法者　　云何而不護",
        "from": "T32n1636_025:0143c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　起邪妄分別　　執我以為常",
        "from": "T32n1636_025:0143c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若我本如然　　何現有生滅",
        "from": "T32n1636_025:0143c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼若別有生　　為誰修福業",
        "from": "T32n1636_025:0143c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　營求於財利　　及受諸快樂",
        "from": "T32n1636_025:0143c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　現見身衰老　　不久而殞滅",
        "from": "T32n1636_025:0143c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　復生為孾兒　　童子及年少",
        "from": "T32n1636_025:0143c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於剎那時分　　速朽而變壞",
        "from": "T32n1636_025:0143c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　何處名為身　　爪髮皆離散",
        "from": "T32n1636_025:0143c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　初識託母胎　　生已為孩孺",
        "from": "T32n1636_025:0143c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　盛年衰老相　　最後為灰燼",
        "from": "T32n1636_025:0143c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　此明身自性　　分位假安布",
        "from": "T32n1636_025:0143c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　畢竟無一塵　　形相那久住",
        "from": "T32n1636_025:0143c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又復此身者　　不說當自知",
        "from": "T32n1636_025:0143c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為異相所遷　　思惟我何有",
        "from": "T32n1636_025:0143c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　由分位和合　　世俗而顯現",
        "from": "T32n1636_025:0143c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於佛正理中　　隨相應所斷",
        "from": "T32n1636_025:0143c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼若無有識　　則不能建立",
        "from": "T32n1636_025:0143c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦無貪恚癡　　云何有功德",
        "from": "T32n1636_025:0143c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　餘九種世間　　各各有三種",
        "from": "T32n1636_025:0143c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無識與衣等　　何能生彼樂",
        "from": "T32n1636_025:0143c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　衣不能生樂　　當知從因生",
        "from": "T32n1636_025:0143c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若樂生於衣　　彼相何曾有",
        "from": "T32n1636_025:0143c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是故正教理　　說諸行無常",
        "from": "T32n1636_025:0143c30_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　現證及思惟　　由因緣和合",
        "from": "T32n1636_025:0144a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見自己眷屬　　云何說有常",
        "from": "T32n1636_025:0144a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於方所推求　　無一微塵許",
        "from": "T32n1636_025:0144a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如燃燈油盡　　彼油知何往",
        "from": "T32n1636_025:0144a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是觀察已　　剎那不可住",
        "from": "T32n1636_025:0144a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　聚集諸眷屬　　嚴飾而行列",
        "from": "T32n1636_025:0144a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　妄計為我有　　於樂他可知",
        "from": "T32n1636_025:0144a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　了知彼眾生　　無一可積集",
        "from": "T32n1636_025:0144a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自他既有殊　　於苦亦無得",
        "from": "T32n1636_025:0144a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是不相應　　彼我何處有",
        "from": "T32n1636_025:0144a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或如自力能　　數數而開示",
        "from": "T32n1636_025:0144a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　世間諸眾生　　多苦常逼切",
        "from": "T32n1636_025:0144a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　當起大悲心　　為憐愍於彼",
        "from": "T32n1636_025:0144a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善作是觀察　　平等而救度",
        "from": "T32n1636_025:0144a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　假使入阿鼻　　如鵝泛蓮沼",
        "from": "T32n1636_025:0144a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為令諸有情　　常處歡喜海",
        "from": "T32n1636_025:0144a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自不樂解脫　　救彼常無厭",
        "from": "T32n1636_025:0144a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　作是利益已　　而不生恃賴",
        "from": "T32n1636_025:0144a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　亦無有疲勞　　不希於果報",
        "from": "T32n1636_025:0144a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若十方福聚　　彼我定獲得",
        "from": "T32n1636_025:0144a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不生嫉妬心　　他樂同己想",
        "from": "T32n1636_025:0144a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又復若自他　　同修於懺悔",
        "from": "T32n1636_025:0144a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　勸請佛世尊　　及隨喜福業",
        "from": "T32n1636_025:0144a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　作如是迴向　　平等無差別",
        "from": "T32n1636_025:0144a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨其福所施　　無盡眾生界",
        "from": "T32n1636_025:0144a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　菩薩行是行　　則多所饒益",
        "from": "T32n1636_025:0144a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　增長大悲心　　獲最上安隱",
        "from": "T32n1636_025:0144a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　得彼金剛手　　及諸佛世尊",
        "from": "T32n1636_025:0144a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常作於護持　　群魔咸驚悸",
        "from": "T32n1636_025:0144a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　是法王之子　　諸天咸讚揚",
        "from": "T32n1636_025:0144b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　住菩提心車　　善遊履勝道",
        "from": "T32n1636_025:0144b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生善修習　　息除自他苦",
        "from": "T32n1636_025:0144b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　故我無所著　　一切皆當捨",
        "from": "T32n1636_025:0144b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人為愛縛　　則苦無窮極",
        "from": "T32n1636_025:0144b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　煩惱由之生　　損壞徒後悔",
        "from": "T32n1636_025:0144b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若火燒眾生　　熾然皆普遍",
        "from": "T32n1636_025:0144b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　下至爪分量　　於己亦無樂",
        "from": "T32n1636_025:0144b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　謂一切我愛　　第一之苦本",
        "from": "T32n1636_025:0144b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　燒然使無餘　　為利諸含識",
        "from": "T32n1636_025:0144b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　樂妻子眷屬　　畢竟皆棄捐",
        "from": "T32n1636_025:0144b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　思惟因緣生　　於身亦無愛",
        "from": "T32n1636_025:0144b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸有具智人　　於彼二皆捨",
        "from": "T32n1636_025:0144b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　了知身與心　　剎那差別起",
        "from": "T32n1636_025:0144b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　謂常無有常　　離垢本無垢",
        "from": "T32n1636_025:0144b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自得於菩提　　彼亦成正覺",
        "from": "T32n1636_025:0144b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不思以世法　　而利於眾生",
        "from": "T32n1636_025:0144b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　法藥及佛像　　如是我當施",
        "from": "T32n1636_025:0144b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以惠自揀擇　　所作事相應",
        "from": "T32n1636_025:0144b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　攝護於己財　　積已而能散",
        "from": "T32n1636_025:0144b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或自身他身　　若少苦多苦",
        "from": "T32n1636_025:0144b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是皆令得　　諸上妙快樂",
        "from": "T32n1636_025:0144b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生於欲境　　防護生障惱",
        "from": "T32n1636_025:0144b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如蛇處窟穴　　畢竟令清淨",
        "from": "T32n1636_025:0144b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　猶如淨良田　　成熟諸稼穡",
        "from": "T32n1636_025:0144b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　能除飢熱惱　　滿足其福報",
        "from": "T32n1636_025:0144b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若人不遠離　　名利及五欲",
        "from": "T32n1636_025:0144b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所說亦無誠　　於彼不須怒",
        "from": "T32n1636_025:0144b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼既失自利　　怒之忍何有",
        "from": "T32n1636_025:0144b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於是不生瞋　　利他而不斷",
        "from": "T32n1636_025:0144c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　善行真實忍　　如觀麝有香",
        "from": "T32n1636_025:0144c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　己物為他侵　　返遭獵者損",
        "from": "T32n1636_025:0144c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　以方便思惟　　無主宰快樂",
        "from": "T32n1636_025:0144c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自既非受用　　彼何無教誨",
        "from": "T32n1636_025:0144c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是彼佛子　　念念除煩惱",
        "from": "T32n1636_025:0144c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　了諸根境界　　譬若大瘡疱",
        "from": "T32n1636_025:0144c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　念彼忿恚者　　饒益而開誘",
        "from": "T32n1636_025:0144c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　自性離調柔　　處苦樂何得",
        "from": "T32n1636_025:0144c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又彼五大種　　示之以強名",
        "from": "T32n1636_025:0144c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　乃至住有情　　皆成於義利",
        "from": "T32n1636_025:0144c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若利生無懈　　則不造諸惡",
        "from": "T32n1636_025:0144c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　故我勤修習　　六界無衰惱",
        "from": "T32n1636_025:0144c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　至虛空究竟　　及世間邊際",
        "from": "T32n1636_025:0144c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我住利眾生　　令智心成熟",
        "from": "T32n1636_025:0144c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　身為阿闍梨　　善學離諸苦",
        "from": "T32n1636_025:0144c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　不問自力能　　何所非防護",
        "from": "T32n1636_025:0144c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若自作苦惱　　何因生恐怖",
        "from": "T32n1636_025:0144c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　隨自師了知　　我慢諸過失",
        "from": "T32n1636_025:0144c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　住大悲境界　　不貪於果報",
        "from": "T32n1636_025:0144c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常近事修學　　平等何有我",
        "from": "T32n1636_025:0144c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　見癡狂盲者　　行步多錯悞",
        "from": "T32n1636_025:0144c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　或墮險道中　　自他常憂惱",
        "from": "T32n1636_025:0144c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　為尋求彼故　　同難而救護",
        "from": "T32n1636_025:0144c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　如是行相應　　則見大功德",
        "from": "T32n1636_025:0144c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　我過失非一　　其深如巨海",
        "from": "T32n1636_025:0144c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若自他復造　　何由得解脫",
        "from": "T32n1636_025:0144c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若彼善教誡　　羞恥諸過咎",
        "from": "T32n1636_025:0144c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　常頂受他言　　一切皆當學",
        "from": "T32n1636_025:0144c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　聞彼冤生怖　　慎勿於餘說",
        "from": "T32n1636_025:0145a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　彼我心命同　　若喜則無恥",
        "from": "T32n1636_025:0145a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　諸煩惱冤敵　　我獨能鬪戰",
        "from": "T32n1636_025:0145a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　若此於心中　　損壞無安隱",
        "from": "T32n1636_025:0145a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸命觀自在　　大悲無與等",
        "from": "T32n1636_025:0145a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　紺髮簇旋螺　　復如鬘垂下",
        "from": "T32n1636_025:0145a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　於十方剎土　　指端流乳海",
        "from": "T32n1636_025:0145a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　救地獄鬼趣　　輪回諸極苦",
        "from": "T32n1636_025:0145a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　復於善眾生　　亦尋聲救護",
        "from": "T32n1636_025:0145a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　婆雉阿修羅　　得脫彼冤害",
        "from": "T32n1636_025:0145a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　極最勝莊嚴　　世所未曾覩",
        "from": "T32n1636_025:0145a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　愚智諸有情　　瞻奉咸忻慶",
        "from": "T32n1636_025:0145a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　又復虔信禮　　妙吉祥大士",
        "from": "T32n1636_025:0145a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　所集正法藏　　能利樂世間",
        "from": "T32n1636_025:0145a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無比大醫王　　善消諸毒難",
        "from": "T32n1636_025:0145a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　施樂及壽命　　故我今稽首",
        "from": "T32n1636_025:0145a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無邊苦熱惱　　現廣大清泉",
        "from": "T32n1636_025:0145a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　令眾悅其心　　當除諸渴愛",
        "from": "T32n1636_025:0145a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　十方諸世界　　各現劫羅波",
        "from": "T32n1636_025:0145a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　眾生滿所求　　普現青蓮目",
        "from": "T32n1636_025:0145a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　無量諸菩薩　　稱讚身毛聳",
        "from": "T32n1636_025:0145a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　歸命文殊尊　　最勝無過上",
        "from": "T32n1636_025:0145a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一切希有菩薩行　　結集所有諸功德　自他當獲福無窮　　皆作文殊真佛子　書寫此正法　　我所有微善　為愍有情故　　令增長勝惠　諸法從緣生　　緣謝法即滅　我師大沙門　　常作如是說大乘集菩薩學論卷第",
        "from": "T32n1636_025:0145a23_0",
        "context_with_next_sentence": false
    }
]