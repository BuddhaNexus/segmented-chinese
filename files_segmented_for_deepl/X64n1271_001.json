[
    {
        "source_sentence": " 牧牛圖序",
        "from": "X64n1271_001:0777a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺教經云。",
        "from": "X64n1271_001:0777a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如牧牛。",
        "from": "X64n1271_001:0777a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執杖視之。",
        "from": "X64n1271_001:0777a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令縱逸。",
        "from": "X64n1271_001:0777a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯人苗稼。",
        "from": "X64n1271_001:0777a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則牧牛之說所自起也。",
        "from": "X64n1271_001:0777a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗣是馬祖問石鞏。",
        "from": "X64n1271_001:0777a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝在此何務。",
        "from": "X64n1271_001:0777a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X64n1271_001:0777a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牧牛。",
        "from": "X64n1271_001:0777a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又問。",
        "from": "X64n1271_001:0777a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛作麼生牧。",
        "from": "X64n1271_001:0777a07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X64n1271_001:0777a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一回入草去。",
        "from": "X64n1271_001:0777a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驀鼻拽將來。",
        "from": "X64n1271_001:0777a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則善牧之人也。",
        "from": "X64n1271_001:0777a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又大溈安公之在溈山也。",
        "from": "X64n1271_001:0777a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。",
        "from": "X64n1271_001:0777a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾依溈山住。",
        "from": "X64n1271_001:0777a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不學溈山禪。",
        "from": "X64n1271_001:0777a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但牧一頭水牯牛。",
        "from": "X64n1271_001:0777a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又白雲端公之於郭功輔也。",
        "from": "X64n1271_001:0777a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詰之曰。",
        "from": "X64n1271_001:0777a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛淳乎。",
        "from": "X64n1271_001:0777a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而若自牧。",
        "from": "X64n1271_001:0777a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若教他牧。",
        "from": "X64n1271_001:0777a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "層見疊出於古今者。",
        "from": "X64n1271_001:0777a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "益彰彰矣。",
        "from": "X64n1271_001:0777a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後乃有繪之乎圖。",
        "from": "X64n1271_001:0777a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始於未牧。",
        "from": "X64n1271_001:0777a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終於雙泯。",
        "from": "X64n1271_001:0777a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "品而列之為十。",
        "from": "X64n1271_001:0777a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其牛則如次。",
        "from": "X64n1271_001:0777a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初黑繼白。",
        "from": "X64n1271_001:0777a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以至於無。",
        "from": "X64n1271_001:0777a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粲如也。",
        "from": "X64n1271_001:0777a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而普明復一一係之以頌。",
        "from": "X64n1271_001:0777a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普明。",
        "from": "X64n1271_001:0777a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未詳何許人。",
        "from": "X64n1271_001:0777a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圖頌亦不知出一人之手否。",
        "from": "X64n1271_001:0777a14_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今無論。",
        "from": "X64n1271_001:0777a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟是其為圖也。",
        "from": "X64n1271_001:0777a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象顯而意深。",
        "from": "X64n1271_001:0777a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為頌也。",
        "from": "X64n1271_001:0777a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言近而旨遠。",
        "from": "X64n1271_001:0777a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學人持為左券。",
        "from": "X64n1271_001:0777a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因之審德稽業。",
        "from": "X64n1271_001:0777a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯察其已臻。",
        "from": "X64n1271_001:0777a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰希其所未到。",
        "from": "X64n1271_001:0777a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "免使得少為足。",
        "from": "X64n1271_001:0777a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以墮於增上慢地。",
        "from": "X64n1271_001:0777a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則裨益良多。",
        "from": "X64n1271_001:0777a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂錄而重壽諸梓。",
        "from": "X64n1271_001:0777a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外更有尋牛以至入廛。",
        "from": "X64n1271_001:0777a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為圖者十。",
        "from": "X64n1271_001:0777a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與今大同小異。",
        "from": "X64n1271_001:0777a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并及教中分別進脩次第。",
        "from": "X64n1271_001:0777a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可比例而知者。",
        "from": "X64n1271_001:0777a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱附末簡。",
        "from": "X64n1271_001:0777a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以便參考。",
        "from": "X64n1271_001:0777a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夫一超直入之士。",
        "from": "X64n1271_001:0777a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無勞鞭挽而天然露地白牛。",
        "from": "X64n1271_001:0777a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不落階級而剎那能所雙絕。",
        "from": "X64n1271_001:0777a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則圖成滯貨。",
        "from": "X64n1271_001:0777a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌成剩語。",
        "from": "X64n1271_001:0777a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覧之當發一笑。",
        "from": "X64n1271_001:0777a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾無強焉。",
        "from": "X64n1271_001:0777a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬曆己酉如來誕日　後學　袾宏　謹書 普明寺牧牛圖頌序咄。",
        "from": "X64n1271_001:0777a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡大地是普明一頭牛。",
        "from": "X64n1271_001:0777b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何處更有佛與眾生。",
        "from": "X64n1271_001:0777b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毫厘不隔。",
        "from": "X64n1271_001:0777b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本是如如。",
        "from": "X64n1271_001:0777b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若道此牛有黑有白。",
        "from": "X64n1271_001:0777b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有雄有雌。",
        "from": "X64n1271_001:0777b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有饑有飽。",
        "from": "X64n1271_001:0777b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便是一體分別成二。",
        "from": "X64n1271_001:0777b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊初生。",
        "from": "X64n1271_001:0777b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指天指地。",
        "from": "X64n1271_001:0777b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周行目顧。",
        "from": "X64n1271_001:0777b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯人苗稼不少。",
        "from": "X64n1271_001:0777b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖師西來。",
        "from": "X64n1271_001:0777b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直指人心。",
        "from": "X64n1271_001:0777b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見性成佛。",
        "from": "X64n1271_001:0777b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喫他水草良多。",
        "from": "X64n1271_001:0777b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三玄要．四料揀．五位君臣．九十六圓相。",
        "from": "X64n1271_001:0777b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受盡牽制鞭策。",
        "from": "X64n1271_001:0777b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至拈椎竪拂。",
        "from": "X64n1271_001:0777b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行棒行喝。",
        "from": "X64n1271_001:0777b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種機用。",
        "from": "X64n1271_001:0777b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皮毛脫落。",
        "from": "X64n1271_001:0777b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四足潛踪。",
        "from": "X64n1271_001:0777b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許大一頭牛。",
        "from": "X64n1271_001:0777b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知逃向那裡去了。",
        "from": "X64n1271_001:0777b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到這裡地。",
        "from": "X64n1271_001:0777b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重關已破。",
        "from": "X64n1271_001:0777b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且道向上還有事麼。",
        "from": "X64n1271_001:0777b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以拂子打圓相云。",
        "from": "X64n1271_001:0777b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火裡木牛耕白雪。",
        "from": "X64n1271_001:0777b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲中石馬舞春風。",
        "from": "X64n1271_001:0777b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "會麼。",
        "from": "X64n1271_001:0777b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不會。",
        "from": "X64n1271_001:0777b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請看牧牛頌并諸方次韻語句。",
        "from": "X64n1271_001:0777b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟還有優劣也無。",
        "from": "X64n1271_001:0777b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨濟正宗三十二世[車*度]轢道人　嚴大參　謹序 普明禪師牧牛圖頌附諸大禪師和頌目錄普明原頌。",
        "from": "X64n1271_001:0777b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲棲蓮太師付梓序云。",
        "from": "X64n1271_001:0777b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普明。",
        "from": "X64n1271_001:0777b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未詳何許人。",
        "from": "X64n1271_001:0777b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則亦不知道場之所矣。",
        "from": "X64n1271_001:0777b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辛丑冬。",
        "from": "X64n1271_001:0777b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予來理坊事。",
        "from": "X64n1271_001:0777b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壬寅夏。",
        "from": "X64n1271_001:0777b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "[車*度]轢嚴居士將普明緣起及舊寺圖相示。",
        "from": "X64n1271_001:0777b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始知因緣在此。",
        "from": "X64n1271_001:0777b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居士既恢復寺基。",
        "from": "X64n1271_001:0777b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初請玄微禪師。",
        "from": "X64n1271_001:0777b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼請明巖耆德。",
        "from": "X64n1271_001:0777b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殿宇煥然。",
        "from": "X64n1271_001:0777c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "房僚俱備。",
        "from": "X64n1271_001:0777c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將來欲成獅窟。",
        "from": "X64n1271_001:0777c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余見諸方和頌。",
        "from": "X64n1271_001:0777c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀之不勝喜躍。",
        "from": "X64n1271_001:0777c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "效顰和之。",
        "from": "X64n1271_001:0777c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并將圖頌和頌。",
        "from": "X64n1271_001:0777c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合成一冊流通。",
        "from": "X64n1271_001:0777c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞谷大師天隱禪師破山禪師",
        "from": "X64n1271_001:0777c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬如禪師浮石禪師玉林禪師",
        "from": "X64n1271_001:0777c05_0",
        "context_with_next_sentence": true
