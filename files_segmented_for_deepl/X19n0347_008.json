[
    {
        "source_sentence": "維摩詰所說經卷八",
        "from": "X19n0347_008:0565b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道品",
        "from": "X19n0347_008:0565b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時文殊師利。",
        "from": "X19n0347_008:0565b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問維摩詰言。",
        "from": "X19n0347_008:0565b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩云何通達佛道。",
        "from": "X19n0347_008:0565b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩詰言。",
        "from": "X19n0347_008:0565b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩行於非道(起照後)。",
        "from": "X19n0347_008:0565b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為通達佛道。",
        "from": "X19n0347_008:0565b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又問云何菩薩行於非道。",
        "from": "X19n0347_008:0565b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰若菩薩行五無間(五逆罪也)。",
        "from": "X19n0347_008:0565b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而無惱恚。",
        "from": "X19n0347_008:0565b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於地獄。",
        "from": "X19n0347_008:0565b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸罪垢(地獄因)。",
        "from": "X19n0347_008:0565b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至于畜生。",
        "from": "X19n0347_008:0565b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有無明憍慢等過。",
        "from": "X19n0347_008:0565b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至于餓鬼。",
        "from": "X19n0347_008:0565b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而具足功德。",
        "from": "X19n0347_008:0565b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行色無色界道。",
        "from": "X19n0347_008:0565b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以為勝。",
        "from": "X19n0347_008:0565b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行貪欲。",
        "from": "X19n0347_008:0565b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸染著。",
        "from": "X19n0347_008:0565b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行瞋恚。",
        "from": "X19n0347_008:0565b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生無有恚礙。",
        "from": "X19n0347_008:0565b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行愚癡。",
        "from": "X19n0347_008:0565b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以智慧調伏其心。",
        "from": "X19n0347_008:0565b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行慳貪。",
        "from": "X19n0347_008:0565b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而捨內外所有不惜身命。",
        "from": "X19n0347_008:0565b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行毀禁。",
        "from": "X19n0347_008:0565b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而安住淨戒。",
        "from": "X19n0347_008:0565b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至小罪。",
        "from": "X19n0347_008:0565b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶懷大懼。",
        "from": "X19n0347_008:0565b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行瞋恚。",
        "from": "X19n0347_008:0565b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而常慈忍。",
        "from": "X19n0347_008:0565b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行懈怠。",
        "from": "X19n0347_008:0565b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而勤修功德。",
        "from": "X19n0347_008:0565b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行亂意。",
        "from": "X19n0347_008:0565b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而常念定。",
        "from": "X19n0347_008:0565b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行愚癡。",
        "from": "X19n0347_008:0565b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而通達世間出世間慧。",
        "from": "X19n0347_008:0565b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行諂偽。",
        "from": "X19n0347_008:0565b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而善方便隨諸經義。",
        "from": "X19n0347_008:0565b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行憍慢。",
        "from": "X19n0347_008:0565b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於眾生猶如橋梁。",
        "from": "X19n0347_008:0565b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示行諸煩惱。",
        "from": "X19n0347_008:0565b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而心常清淨。",
        "from": "X19n0347_008:0565b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入於魔。",
        "from": "X19n0347_008:0565b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而順佛智慧不隨他教。",
        "from": "X19n0347_008:0565b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入聲聞。",
        "from": "X19n0347_008:0565b24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為眾生說未聞法。",
        "from": "X19n0347_008:0565b24_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入辟支佛。",
        "from": "X19n0347_008:0565c01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成就大悲。",
        "from": "X19n0347_008:0565c01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教化眾生。",
        "from": "X19n0347_008:0565c01_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入貧窮。",
        "from": "X19n0347_008:0565c02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有寶手。",
        "from": "X19n0347_008:0565c02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德無盡。",
        "from": "X19n0347_008:0565c02_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入形殘。",
        "from": "X19n0347_008:0565c02_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而具諸好相以自莊嚴。",
        "from": "X19n0347_008:0565c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入下賤。",
        "from": "X19n0347_008:0565c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而生佛種性中。",
        "from": "X19n0347_008:0565c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具諸功德。",
        "from": "X19n0347_008:0565c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入羸劣醜陋。",
        "from": "X19n0347_008:0565c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而得那羅延身。",
        "from": "X19n0347_008:0565c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生之所樂見。",
        "from": "X19n0347_008:0565c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入老病。",
        "from": "X19n0347_008:0565c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而永斷病根。",
        "from": "X19n0347_008:0565c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超越死畏。",
        "from": "X19n0347_008:0565c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示有資生。",
        "from": "X19n0347_008:0565c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而恒觀無常。",
        "from": "X19n0347_008:0565c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無所貪。",
        "from": "X19n0347_008:0565c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示有妻妾綵女。",
        "from": "X19n0347_008:0565c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而常遠離五欲淤泥。",
        "from": "X19n0347_008:0565c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現於訥鈍。",
        "from": "X19n0347_008:0565c07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成就辯才。",
        "from": "X19n0347_008:0565c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總持無失。",
        "from": "X19n0347_008:0565c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示入邪濟。",
        "from": "X19n0347_008:0565c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而以正濟度諸眾生。",
        "from": "X19n0347_008:0565c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現遍入諸道。",
        "from": "X19n0347_008:0565c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而斷其因緣。",
        "from": "X19n0347_008:0565c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現於涅槃。",
        "from": "X19n0347_008:0565c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不斷生死。",
        "from": "X19n0347_008:0565c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利。",
        "from": "X19n0347_008:0565c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩能如是行於非道(收應前)。",
        "from": "X19n0347_008:0565c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為通達佛道。",
        "from": "X19n0347_008:0565c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是維摩詰。",
        "from": "X19n0347_008:0565c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問文殊師利。",
        "from": "X19n0347_008:0565c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為如來種。",
        "from": "X19n0347_008:0565c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利言。",
        "from": "X19n0347_008:0565c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有身為種。",
        "from": "X19n0347_008:0565c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明有愛為種。",
        "from": "X19n0347_008:0565c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪恚癡為種。",
        "from": "X19n0347_008:0565c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四顛倒為種。",
        "from": "X19n0347_008:0566a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五蓋為種。",
        "from": "X19n0347_008:0566a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六入為種。",
        "from": "X19n0347_008:0566a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七識處為種。",
        "from": "X19n0347_008:0566a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八邪法為種。",
        "from": "X19n0347_008:0566a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九惱處為種。",
        "from": "X19n0347_008:0566a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十不善道為種。",
        "from": "X19n0347_008:0566a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以要言之。",
        "from": "X19n0347_008:0566a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六十二見。",
        "from": "X19n0347_008:0566a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切煩惱皆是佛種。",
        "from": "X19n0347_008:0566a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰何謂也。",
        "from": "X19n0347_008:0566a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "X19n0347_008:0566a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見無為入正位者。",
        "from": "X19n0347_008:0566a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能復發阿耨多羅三藐三菩提心。",
        "from": "X19n0347_008:0566a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如高原陸地。",
        "from": "X19n0347_008:0566a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生蓮華。",
        "from": "X19n0347_008:0566a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卑濕淤泥。",
        "from": "X19n0347_008:0566a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃生此華。",
        "from": "X19n0347_008:0566a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是見無為法。",
        "from": "X19n0347_008:0566a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入正位者。",
        "from": "X19n0347_008:0566a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不復能生於佛法。",
        "from": "X19n0347_008:0566a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱泥中。",
        "from": "X19n0347_008:0566a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃有眾生起佛法耳。",
        "from": "X19n0347_008:0566a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如植種於空。",
        "from": "X19n0347_008:0566a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不能生。",
        "from": "X19n0347_008:0566a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "糞壤之地。",
        "from": "X19n0347_008:0566a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能滋茂。",
        "from": "X19n0347_008:0566a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是入無為正位者。",
        "from": "X19n0347_008:0566a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生佛法。",
        "from": "X19n0347_008:0566a09_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起於我見如須彌山。",
        "from": "X19n0347_008:0566a09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶能發於阿耨多羅三藐三菩提心。",
        "from": "X19n0347_008:0566a10_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生佛法矣。",
        "from": "X19n0347_008:0566a11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知一切煩惱為如來種。",
        "from": "X19n0347_008:0566a11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如不下巨海(妙諭)。",
        "from": "X19n0347_008:0566a11_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能得無價寶珠。",
        "from": "X19n0347_008:0566a12_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是。",
        "from": "X19n0347_008:0566a12_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不入煩惱大海。",
        "from": "X19n0347_008:0566a12_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則不能得一切智寶。",
        "from": "X19n0347_008:0566a13_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大迦葉。",
        "from": "X19n0347_008:0566a13_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歎言善哉善哉。",
        "from": "X19n0347_008:0566a13_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利。",
        "from": "X19n0347_008:0566a14_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "快說此語。",
        "from": "X19n0347_008:0566a14_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠如所言。",
        "from": "X19n0347_008:0566a14_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵勞之儔。",
        "from": "X19n0347_008:0566a14_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為如來種。",
        "from": "X19n0347_008:0566a15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等今者。",
        "from": "X19n0347_008:0566a15_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不復堪任發阿耨多羅三藐三菩提心。",
        "from": "X19n0347_008:0566a15_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至五無間罪。",
        "from": "X19n0347_008:0566a16_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶能發意生於佛法。",
        "from": "X19n0347_008:0566a16_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今我等。",
        "from": "X19n0347_008:0566a17_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不能發。",
        "from": "X19n0347_008:0566a17_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如根敗之士。",
        "from": "X19n0347_008:0566a17_44",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其於五欲。",
        "from": "X19n0347_008:0566a17_45",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能復利。",
        "from": "X19n0347_008:0566a18_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是聲聞諸結斷者。",
        "from": "X19n0347_008:0566a18_47",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法中。",
        "from": "X19n0347_008:0566a18_48",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所復益。",
        "from": "X19n0347_008:0566a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不志願。",
        "from": "X19n0347_008:0566a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故文殊師利。",
        "from": "X19n0347_008:0566a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫於佛法有反復。",
        "from": "X19n0347_008:0566a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而聲聞無也。",
        "from": "X19n0347_008:0566a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "X19n0347_008:0566a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫聞佛法。",
        "from": "X19n0347_008:0566a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能起無上道心。",
        "from": "X19n0347_008:0566a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不斷三寶。",
        "from": "X19n0347_008:0566a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正使聲聞終身聞佛法。",
        "from": "X19n0347_008:0566a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力無畏等。",
        "from": "X19n0347_008:0566a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不能發無上道意。",
        "from": "X19n0347_008:0566a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中有菩薩。",
        "from": "X19n0347_008:0566a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名普現色身。",
        "from": "X19n0347_008:0566a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問維摩詰言居士。",
        "from": "X19n0347_008:0566a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母妻子。",
        "from": "X19n0347_008:0566a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親戚眷屬。",
        "from": "X19n0347_008:0566a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吏民知識。",
        "from": "X19n0347_008:0566a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉為是誰。",
        "from": "X19n0347_008:0566a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奴婢僮僕。",
        "from": "X19n0347_008:0566a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "象馬車乘。",
        "from": "X19n0347_008:0566a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆何所在。",
        "from": "X19n0347_008:0566b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是維摩詰。",
        "from": "X19n0347_008:0566b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以偈答曰。",
        "from": "X19n0347_008:0566b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智度菩薩母　　方便以為父　　一切眾導師　無不由是生　　法喜以為妻　　慈悲心為女　善心誠實男　　畢竟空寂舍　　弟子眾塵勞　隨意之所轉　　道品善知識　　由是成正覺　諸度法等侶　　四攝為妓女　　歌詠誦法言　以此為音樂　　總持之園苑　　無漏法林樹　覺意淨妙華　　解脫智慧果　　八解之浴池　定水湛然滿　　布以七淨華　　浴此無垢人　象馬五通馳　　大乘以為車　　調御以一心　遊於八正路　　相具以嚴容　　眾好飾其姿　慚愧之上服　　深心為華鬘　　富有七財寶　教授以滋息　　如所說修行　　迴向為大利　四禪為牀座　　從於淨命生　　多聞增智慧　以為自覺音　　甘露法之食　　解脫味為漿　淨心以澡浴　　戒品為塗香　　摧滅煩惱賊　勇徤無能踰　　降伏四種魔　　勝旛建道場　雖知無起滅　　示彼故有生　　悉現諸國土　如日無不見　　供養於十方　　無量億如來　諸佛及己身　　無有分別想　　雖知諸佛國　及與眾生空　　而常修淨土　　教化於羣生　諸有眾生類　　形聲及威儀　　無畏力菩薩　一時能盡現　　覺知眾魔事　　而示隨其行　以善方便智　　隨意皆能現　　或示老病死　成就諸羣生　　了知如幻化　　通達無有礙　或現劫盡燒　　天地皆洞然　　眾人有常想　照令知無常　　無數億眾生　　俱來請菩薩　一時到其舍　　化令向佛道　　經書禁呪術　工巧諸技藝　　盡現行此事　　饒益諸羣生　世間眾道法　　悉於中出家　　因以解人惑　而不墮邪見　　或作日月天　　梵王世界主　或時作地水　　或復作風火　　劫中有疾疫　現作諸藥草　　若有服之者　　除病消眾毒　劫中有饑饉　　現身作飲食　　先救彼饑渴　却以法語人　　劫中有刀兵　　為之起慈悲　化彼諸眾生　　令住無諍地　　若有大戰陣　立之以等力　　菩薩現威勢　　降伏使和安　一切國土中　　諸有地獄處　　輙往到於彼　勉濟其苦惱　　一切國土中　　畜生相食噉　皆現生於彼　　為之作利益　　示受於五欲　示復現行禪　　令魔心憒亂　　不能得其便　火中生蓮華　　是可謂希有　　在欲而行禪　希有亦如是　　或現作淫女　　引諸好色者　先以欲鉤牽　　後令入佛智　　或為邑中主　或作商人導　　國師及大臣　　以祐利眾生　諸有貧窮者　　現作無盡藏　　因以勸導之　令發菩提心　　我心憍慢者　　為現大力士　消伏諸貢高　　令住無上道　　其有恐懼眾　居前而慰安　　先施以無畏　　後令發道心　或現離婬欲　　為五通仙人　　開導諸羣生　令住戒忍慈　　見須供事者　　現為作僮僕　既悅可其意　　乃發以道心　　隨彼之所須　得入於佛道　　以善方便力　　皆能給足之　如是道無量　　所行無有涯　　智慧無邊際　度脫無數眾　　假令一切佛　　於無數億劫　讚歎其功德　　猶尚不能盡　　誰聞如是法　不發菩提心　　除彼不肖人　　癡冥無智者",
        "from": "X19n0347_008:0566b02_0",
        "context_with_next_sentence": false
    }
