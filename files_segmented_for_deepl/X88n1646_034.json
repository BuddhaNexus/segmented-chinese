[
    {
        "source_sentence": "居士傳三十四",
        "from": "X88n1646_034:0243b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真希元吳毅夫傳",
        "from": "X88n1646_034:0243b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真希元名德秀。",
        "from": "X88n1646_034:0243b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建州浦城人。",
        "from": "X88n1646_034:0243b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慶元五年登進士第。",
        "from": "X88n1646_034:0243b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理宗朝官至參知政事。",
        "from": "X88n1646_034:0243b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立朝不滿十年。",
        "from": "X88n1646_034:0243b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所上奏疏數十萬言。",
        "from": "X88n1646_034:0243b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆切當世要務。",
        "from": "X88n1646_034:0243b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直聲震朝野。",
        "from": "X88n1646_034:0243b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洊歷州郡。",
        "from": "X88n1646_034:0243b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民懷其惠。",
        "from": "X88n1646_034:0243b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自寧宗以來。",
        "from": "X88n1646_034:0243b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屢下偽學之禁。",
        "from": "X88n1646_034:0243b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真元晚出。",
        "from": "X88n1646_034:0243b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨慨然以道自任。",
        "from": "X88n1646_034:0243b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀佛經通其旨趣。",
        "from": "X88n1646_034:0243c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞題遺教經云。",
        "from": "X88n1646_034:0243c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遺教經盖瞿曇氏最後教諸弟子語。",
        "from": "X88n1646_034:0243c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今學佛者罕甞誦而習之。",
        "from": "X88n1646_034:0243c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖自禪教既分。",
        "from": "X88n1646_034:0243c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者往往以為不階語言文字而佛可得。",
        "from": "X88n1646_034:0243c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是脫略經教而求。",
        "from": "X88n1646_034:0243c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其所謂禪者。",
        "from": "X88n1646_034:0243c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高則高矣。",
        "from": "X88n1646_034:0243c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至其身心顛倒有不堪點檢者。",
        "from": "X88n1646_034:0243c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則反不如誦經持律之徒。",
        "from": "X88n1646_034:0243c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "循循規矩中。",
        "from": "X88n1646_034:0243c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶不至大謬也。",
        "from": "X88n1646_034:0243c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今觀此經。",
        "from": "X88n1646_034:0243c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以端心正念為首。",
        "from": "X88n1646_034:0243c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而深言持戒為禪定智慧之本。",
        "from": "X88n1646_034:0243c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至謂制心之道如牧牛。",
        "from": "X88n1646_034:0243c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如馭馬。",
        "from": "X88n1646_034:0243c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不使縱逸。",
        "from": "X88n1646_034:0243c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去瞋止妄。",
        "from": "X88n1646_034:0243c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息欲寡求。",
        "from": "X88n1646_034:0243c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後由遠離以至精進。",
        "from": "X88n1646_034:0243c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由禪定以造智慧。",
        "from": "X88n1646_034:0243c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有漸次梯級。",
        "from": "X88n1646_034:0243c09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非如今之談者以為一超可到如來地位也。",
        "from": "X88n1646_034:0243c10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以吾儒觀之。",
        "from": "X88n1646_034:0243c10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖門教人以下學為本。",
        "from": "X88n1646_034:0243c11_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後可以上達。",
        "from": "X88n1646_034:0243c11_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦此理也。",
        "from": "X88n1646_034:0243c11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學佛者不由持戒而欲至定慧。",
        "from": "X88n1646_034:0243c12_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶吾儒舍離經辨志而急於大成。",
        "from": "X88n1646_034:0243c12_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去灑掃應對而語性與天道之妙。",
        "from": "X88n1646_034:0243c13_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其可得哉。",
        "from": "X88n1646_034:0243c14_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余謂佛氏之有此經。",
        "from": "X88n1646_034:0243c14_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶儒家之有論語。",
        "from": "X88n1646_034:0243c14_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而金剛．楞嚴．圓覺等經則易．中庸之比。",
        "from": "X88n1646_034:0243c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未有不先論語而可遽及易．中庸者也。",
        "from": "X88n1646_034:0243c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其題蓮華經普門品云。",
        "from": "X88n1646_034:0243c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔唐李文公問藥山儼禪師曰。",
        "from": "X88n1646_034:0243c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如何是惡風吹船飄落鬼國。",
        "from": "X88n1646_034:0243c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師曰李翱小子問此何為。",
        "from": "X88n1646_034:0243c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文公怫然怒形於色。",
        "from": "X88n1646_034:0243c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師笑曰如此便是黑風吹船飄入鬼國也。",
        "from": "X88n1646_034:0243c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吁藥山可為善啟發人矣。",
        "from": "X88n1646_034:0243c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是推之。",
        "from": "X88n1646_034:0243c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知利欲熾然即是火坑。",
        "from": "X88n1646_034:0243c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪愛沉溺便是苦海。",
        "from": "X88n1646_034:0243c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念清淨烈焰成池。",
        "from": "X88n1646_034:0243c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念警覺船到彼岸。",
        "from": "X88n1646_034:0243c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災患纏縛隨處而安。",
        "from": "X88n1646_034:0243c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無怖畏如械自脫。",
        "from": "X88n1646_034:0243c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人侵凌待他橫逆。",
        "from": "X88n1646_034:0243c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無忿嫉如獸自奔。",
        "from": "X88n1646_034:0243c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀是經者作如是觀。",
        "from": "X88n1646_034:0243c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知補陀大士真實為人。",
        "from": "X88n1646_034:0243c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非虗語也。",
        "from": "X88n1646_034:0243c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又甞遺書提刑陳貴謙問禪門事。",
        "from": "X88n1646_034:0243c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貴謙甞參月林鐵鞭諸老。",
        "from": "X88n1646_034:0244a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "切究向上一機。",
        "from": "X88n1646_034:0244a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答之曰。",
        "from": "X88n1646_034:0244a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承下問禪門所謂話頭合看與否。",
        "from": "X88n1646_034:0244a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以愚觀之。",
        "from": "X88n1646_034:0244a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初無定說。",
        "from": "X88n1646_034:0244a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能一念無生。",
        "from": "X88n1646_034:0244a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全體是佛。",
        "from": "X88n1646_034:0244a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何處別有話頭。",
        "from": "X88n1646_034:0244a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只緣多生習氣背覺合塵。",
        "from": "X88n1646_034:0244a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那之間念念起滅。",
        "from": "X88n1646_034:0244a04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如猴猻拾栗相似。",
        "from": "X88n1646_034:0244a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖師不得已權設方便。",
        "from": "X88n1646_034:0244a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令咬嚼一句無滋味話頭。",
        "from": "X88n1646_034:0244a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淘汝業識都無實義。",
        "from": "X88n1646_034:0244a06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今時學者却於話頭上強生穿鑿。",
        "from": "X88n1646_034:0244a06_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或至逐箇解說以當事業。",
        "from": "X88n1646_034:0244a07_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠之遠矣。",
        "from": "X88n1646_034:0244a08_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來教謂未誦佛之言。",
        "from": "X88n1646_034:0244a08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存佛之心。",
        "from": "X88n1646_034:0244a08_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行佛之行。",
        "from": "X88n1646_034:0244a08_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久久須有得處。",
        "from": "X88n1646_034:0244a09_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此行履固不失為一世賢者。",
        "from": "X88n1646_034:0244a09_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然禪門一著又須見徹自己本地風光方為究竟。",
        "from": "X88n1646_034:0244a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此事雖人人本有。",
        "from": "X88n1646_034:0244a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為客塵妄想所蔽。",
        "from": "X88n1646_034:0244a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不痛加煆煉。",
        "from": "X88n1646_034:0244a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不明淨。",
        "from": "X88n1646_034:0244a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來教又謂。",
        "from": "X88n1646_034:0244a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道若不在言語文字上。",
        "from": "X88n1646_034:0244a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛諸祖何為留許多經論在世。",
        "from": "X88n1646_034:0244a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經是佛言。",
        "from": "X88n1646_034:0244a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪是佛心。",
        "from": "X88n1646_034:0244a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初無違背。",
        "from": "X88n1646_034:0244a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但世人尋言逐句。",
        "from": "X88n1646_034:0244a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒溺教網。",
        "from": "X88n1646_034:0244a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知自己有一段光明大事。",
        "from": "X88n1646_034:0244a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故達摩西來不立文字直指人心見性成佛謂之教外別傳。",
        "from": "X88n1646_034:0244a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非是教外別有一箇道理。",
        "from": "X88n1646_034:0244a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只要明了此心。",
        "from": "X88n1646_034:0244a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著教相。",
        "from": "X88n1646_034:0244a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今若只誦佛語而不會歸自己。",
        "from": "X88n1646_034:0244a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人數他珍寶。",
        "from": "X88n1646_034:0244a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無半錢分。",
        "from": "X88n1646_034:0244a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱於中得少滋味。",
        "from": "X88n1646_034:0244a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶是法愛之見。",
        "from": "X88n1646_034:0244a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直須打併一切淨盡。",
        "from": "X88n1646_034:0244a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方有少分相應也。",
        "from": "X88n1646_034:0244a19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以日用驗之。",
        "from": "X88n1646_034:0244a19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖無濁惡粗過。",
        "from": "X88n1646_034:0244a20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然於一切善惡逆順境界上果能照破不為他所移換否。",
        "from": "X88n1646_034:0244a20_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜睡中夢覺一如否。",
        "from": "X88n1646_034:0244a21_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐怖顛倒否。",
        "from": "X88n1646_034:0244a21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾病而能作得主否。",
        "from": "X88n1646_034:0244a22_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若目前猶有境在。",
        "from": "X88n1646_034:0244a22_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則夢寐未免顛倒。",
        "from": "X88n1646_034:0244a22_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢寐既顛倒。",
        "from": "X88n1646_034:0244a23_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾病必不能作得主宰。",
        "from": "X88n1646_034:0244a23_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾病既作主宰不得。",
        "from": "X88n1646_034:0244a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則生死岸頭必不自在。",
        "from": "X88n1646_034:0244a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂如人飲水冷暖自知。",
        "from": "X88n1646_034:0244a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來教謂無下手處。",
        "from": "X88n1646_034:0244b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只是無下手處正是得力處。",
        "from": "X88n1646_034:0244b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前書所言。",
        "from": "X88n1646_034:0244b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜處閙處皆著一隻眼看是甚麼道理。",
        "from": "X88n1646_034:0244b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久久純熟。",
        "from": "X88n1646_034:0244b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無靜閙之異。",
        "from": "X88n1646_034:0244b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其或雜亂紛飛起滅不停。",
        "from": "X88n1646_034:0244b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却舉一則公案與之撕挨。",
        "from": "X88n1646_034:0244b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則起滅之心自然頓息。",
        "from": "X88n1646_034:0244b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照與照者同時寂滅。",
        "from": "X88n1646_034:0244b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是到家消息也。",
        "from": "X88n1646_034:0244b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端平二年希元有疾。",
        "from": "X88n1646_034:0244b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三上章乞祠祿。",
        "from": "X88n1646_034:0244b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾亟。",
        "from": "X88n1646_034:0244b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冠帶起坐。",
        "from": "X88n1646_034:0244b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神爽不亂。",
        "from": "X88n1646_034:0244b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卒諡文忠(宋史．西山文集．緇門警訓)。",
        "from": "X88n1646_034:0244b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吳毅夫名潛。",
        "from": "X88n1646_034:0244b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧國人。",
        "from": "X88n1646_034:0244b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘉定十年進士第一。",
        "from": "X88n1646_034:0244b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "立朝骨鯁。",
        "from": "X88n1646_034:0244b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不避權要。",
        "from": "X88n1646_034:0244b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳祐中拜右丞相。",
        "from": "X88n1646_034:0244b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以直言忤旨。",
        "from": "X88n1646_034:0244b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "責授化州團練使循州安置。",
        "from": "X88n1646_034:0244b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居常究心大法。",
        "from": "X88n1646_034:0244b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深有悟入。",
        "from": "X88n1646_034:0244b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序大慧正法眼藏。",
        "from": "X88n1646_034:0244b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此事亘古亘今漫天漫地。",
        "from": "X88n1646_034:0244b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端視側視。",
        "from": "X88n1646_034:0244b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直視橫視。",
        "from": "X88n1646_034:0244b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開視闔視。",
        "from": "X88n1646_034:0244b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明視暗視。",
        "from": "X88n1646_034:0244b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不視亦無所視亦無無不視無所視。",
        "from": "X88n1646_034:0244b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂正即離。",
        "from": "X88n1646_034:0244b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂法即塵。",
        "from": "X88n1646_034:0244b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂眼即鑿。",
        "from": "X88n1646_034:0244b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂藏即塞。",
        "from": "X88n1646_034:0244b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故這四箇字直須撇向大洋海裏。",
        "from": "X88n1646_034:0244b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方免擔枷帶索受人圈[袖由+貴]。",
        "from": "X88n1646_034:0244b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然雖如此。",
        "from": "X88n1646_034:0244b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初機鈍根也要得一則半則胡言漢語。",
        "from": "X88n1646_034:0244b15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覷來覷去綻須光景。",
        "from": "X88n1646_034:0244b16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此時正好[拚ㄙ+ㄊ]命捨身。",
        "from": "X88n1646_034:0244b16_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "單鎗直進。",
        "from": "X88n1646_034:0244b17_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如老鼠入牛角挨牆拶壁更無去處。",
        "from": "X88n1646_034:0244b17_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正迷悶中。",
        "from": "X88n1646_034:0244b17_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛忽地頭破額裂通身流汗。",
        "from": "X88n1646_034:0244b18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得箇休歇。",
        "from": "X88n1646_034:0244b18_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始知法眼．慧眼．天眼．佛眼只是一雙凡眼。",
        "from": "X88n1646_034:0244b18_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到這裏說道學人事畢也且未在。",
        "from": "X88n1646_034:0244b19_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "履齋老子即說偈言。",
        "from": "X88n1646_034:0244b20_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以色見我。",
        "from": "X88n1646_034:0244b20_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以音聲求我。",
        "from": "X88n1646_034:0244b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人行邪道。",
        "from": "X88n1646_034:0244b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能見如來。",
        "from": "X88n1646_034:0244b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及赴貶所。",
        "from": "X88n1646_034:0244b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿楓亭接待寺。",
        "from": "X88n1646_034:0244b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告寺僧曰。",
        "from": "X88n1646_034:0244b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊言。",
        "from": "X88n1646_034:0244b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我初入不思議三昧。",
        "from": "X88n1646_034:0244b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫心一緣。",
        "from": "X88n1646_034:0244b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若久習成就。",
        "from": "X88n1646_034:0244b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無他想。",
        "from": "X88n1646_034:0244b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常與定俱。",
        "from": "X88n1646_034:0244b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此繫心一緣乃成佛作祖之階梯也。",
        "from": "X88n1646_034:0244b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂繫心一緣。",
        "from": "X88n1646_034:0244b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日觀月觀眉間毫相與鼻準白之類。",
        "from": "X88n1646_034:0244b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事雖淺近。",
        "from": "X88n1646_034:0244c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理實幽微。",
        "from": "X88n1646_034:0244c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如趙州云。",
        "from": "X88n1646_034:0244c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老僧十二時惟粥飯二時是襍用心。",
        "from": "X88n1646_034:0244c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溈山問懶安曰汝十二時當作何務。",
        "from": "X88n1646_034:0244c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安云牧牛。",
        "from": "X88n1646_034:0244c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溈云作麼生牧。",
        "from": "X88n1646_034:0244c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安曰一回入草去驀鼻拽將來。",
        "from": "X88n1646_034:0244c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡此皆繫心一緣也。",
        "from": "X88n1646_034:0244c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是後尊宿又生巧妙方便。",
        "from": "X88n1646_034:0244c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令學人看个話頭。",
        "from": "X88n1646_034:0244c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如狗子佛性．麻三升．乾屎橛．青州布衫．鎮州蘿蔔．庭前柏樹子之類。",
        "from": "X88n1646_034:0244c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都是理路不通處。",
        "from": "X88n1646_034:0244c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教人取次看一則。",
        "from": "X88n1646_034:0244c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "看來看去。",
        "from": "X88n1646_034:0244c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑來疑去。",
        "from": "X88n1646_034:0244c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二時中常不放捨。",
        "from": "X88n1646_034:0244c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽然鼻孔噴地一下。",
        "from": "X88n1646_034:0244c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是當人安身立命處。",
        "from": "X88n1646_034:0244c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此寺僧徒戒行嚴潔。",
        "from": "X88n1646_034:0244c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦經禮佛脇不附席。",
        "from": "X88n1646_034:0244c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盖禪教律剎之希有。",
        "from": "X88n1646_034:0244c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦謂精進矣。",
        "from": "X88n1646_034:0244c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此鎡基。",
        "from": "X88n1646_034:0244c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更能趲上一層。",
        "from": "X88n1646_034:0244c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫心一緣。",
        "from": "X88n1646_034:0244c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習定生慧。",
        "from": "X88n1646_034:0244c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則人人是佛。",
        "from": "X88n1646_034:0244c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自家現成公案。",
        "from": "X88n1646_034:0244c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用借他珍寶開帳鋪席。",
        "from": "X88n1646_034:0244c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可惜只在有為法上過了一生。",
        "from": "X88n1646_034:0244c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總然以今世持戒福德來世不失人身。",
        "from": "X88n1646_034:0244c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫殻入殻何時休歇。",
        "from": "X88n1646_034:0244c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一有蹉跌永劫扶頭不起。",
        "from": "X88n1646_034:0244c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂此生不向今生度。",
        "from": "X88n1646_034:0244c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更向何生度此身。",
        "from": "X88n1646_034:0244c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此語最為悲切。",
        "from": "X88n1646_034:0244c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "履齋老子未能自度先願度人。",
        "from": "X88n1646_034:0244c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因書此以效法施云。",
        "from": "X88n1646_034:0244c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "履齋者。",
        "from": "X88n1646_034:0244c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毅夫所自號也。",
        "from": "X88n1646_034:0244c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將卒之日。",
        "from": "X88n1646_034:0244c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語人曰。",
        "from": "X88n1646_034:0244c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾將逝矣。",
        "from": "X88n1646_034:0244c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜必雷風大雨。",
        "from": "X88n1646_034:0244c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已而果然。",
        "from": "X88n1646_034:0244c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四更開霽。",
        "from": "X88n1646_034:0244c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰遺表。",
        "from": "X88n1646_034:0244c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作詩端坐而逝。",
        "from": "X88n1646_034:0244c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事在景定三年(徑山志．佛法金湯)。",
        "from": "X88n1646_034:0244c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知歸子曰。",
        "from": "X88n1646_034:0244c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希元之論佛法。",
        "from": "X88n1646_034:0244c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信有功於下學矣。",
        "from": "X88n1646_034:0244c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然學佛而不明宗。",
        "from": "X88n1646_034:0244c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如陷蹄涔求適大海。",
        "from": "X88n1646_034:0244c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不亦左乎。",
        "from": "X88n1646_034:0244c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故陳吳之說。",
        "from": "X88n1646_034:0244c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "學者其不可不盡心也。",
        "from": "X88n1646_034:0244c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汪大紳云。",
        "from": "X88n1646_034:0244c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明宗判得甚是。",
        "from": "X88n1646_034:0244c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然明得宗。",
        "from": "X88n1646_034:0244c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希元之論皆宗也。",
        "from": "X88n1646_034:0244c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明不得宗。",
        "from": "X88n1646_034:0244c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陳吳之論皆枝節耳。",
        "from": "X88n1646_034:0244c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儒門論禪。",
        "from": "X88n1646_034:0244c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何",
        "from": "X88n1646_034:0244c24_7",
        "context_with_next_sentence": false
    }
]