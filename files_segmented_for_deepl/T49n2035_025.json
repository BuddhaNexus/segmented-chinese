[
    {
        "source_sentence": "佛祖統紀卷第二十五",
        "from": "T49n2035_025:0258a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋景定四明東湖沙門志磐撰",
        "from": "T49n2035_025:0258a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山家教典志第十一",
        "from": "T49n2035_025:0258a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者高座以縱辯。",
        "from": "T49n2035_025:0258a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安直筆以載書。",
        "from": "T49n2035_025:0258a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂以文字廣第一義諦。",
        "from": "T49n2035_025:0258a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是猶託之空言。",
        "from": "T49n2035_025:0258a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如載之行事之深切著明也。",
        "from": "T49n2035_025:0258a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊谿有云。",
        "from": "T49n2035_025:0258a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文即門也。",
        "from": "T49n2035_025:0258a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即文以通其理。",
        "from": "T49n2035_025:0258a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈非門乎。",
        "from": "T49n2035_025:0258a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至若後世發揮祖道粲然有述。",
        "from": "T49n2035_025:0258a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖各出義章互形廢立。",
        "from": "T49n2035_025:0258a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以歸宗之誠。",
        "from": "T49n2035_025:0258a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無乎不同也。",
        "from": "T49n2035_025:0258a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今故並陳篇目。",
        "from": "T49n2035_025:0258a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以貽好古者之求。",
        "from": "T49n2035_025:0258a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述山家教典志。",
        "from": "T49n2035_025:0258a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳",
        "from": "T49n2035_025:0258a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘止觀(二卷)",
        "from": "T49n2035_025:0258a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐末教典流散海外。",
        "from": "T49n2035_025:0258a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本朝咸平三年。",
        "from": "T49n2035_025:0258a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本國寂照持此本至四明。",
        "from": "T49n2035_025:0258a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲得之為作序云。",
        "from": "T49n2035_025:0258a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初卷開止觀之解。",
        "from": "T49n2035_025:0258a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次卷示止觀之行。",
        "from": "T49n2035_025:0258a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四十二字門(二卷)　大品四十二字。",
        "from": "T49n2035_025:0258a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初阿後荼。",
        "from": "T49n2035_025:0258a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳用對四十二位。",
        "from": "T49n2035_025:0258a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂行義(一卷)　四明行皎。",
        "from": "T49n2035_025:0258b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊方至南岳福嚴。",
        "from": "T49n2035_025:0258b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於藏中得此本。",
        "from": "T49n2035_025:0258b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸以示圓辯。",
        "from": "T49n2035_025:0258b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後北峯石芝始獲開板。",
        "from": "T49n2035_025:0258b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳願文(一卷)　無諍行門(二卷)　三智觀門次第禪要。",
        "from": "T49n2035_025:0258b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋論玄(已上各一卷)　右止觀。",
        "from": "T49n2035_025:0258b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安樂行義。",
        "from": "T49n2035_025:0258b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願文。",
        "from": "T49n2035_025:0258b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有見本。",
        "from": "T49n2035_025:0258b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘不復見。",
        "from": "T49n2035_025:0258b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惜哉。",
        "from": "T49n2035_025:0258b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台",
        "from": "T49n2035_025:0258b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華玄義(十卷)　法華文句(十卷)　摩訶止觀(十卷名圓頓止觀)　禪波羅蜜(十卷名漸次止觀)修禪六妙門(一卷名不定止觀。",
        "from": "T49n2035_025:0258b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者為陳尚書令毛喜撰)　光明玄義(一卷。",
        "from": "T49n2035_025:0258b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解曇無讖譯四卷別行之本)光明文句(三卷)　菩薩戒疏(二卷)　觀音別行玄義(二卷。",
        "from": "T49n2035_025:0258b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋法華普門一品。",
        "from": "T49n2035_025:0258b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別行部外。",
        "from": "T49n2035_025:0258b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔曇無讖勸河西王誦持愈疾。",
        "from": "T49n2035_025:0258b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故智者特釋)　觀音別行義疏(五卷)　請觀音經疏(一卷)觀無量壽佛經疏(一卷)　觀心論(一卷)　金剛般若經疏(一卷。",
        "from": "T49n2035_025:0258b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建炎二年。",
        "from": "T49n2035_025:0258b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武林修悟將此疏入經為注咸渟元年。",
        "from": "T49n2035_025:0258b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南湖行靖等。",
        "from": "T49n2035_025:0258b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將天台法輪院科金剛經并疏。",
        "from": "T49n2035_025:0258b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刊板於寺)　四念處(四卷)彌陀經義疏(一卷。",
        "from": "T49n2035_025:0258b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛彌陀二疏。",
        "from": "T49n2035_025:0258b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖曾入藏。",
        "from": "T49n2035_025:0258b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而孤山淨覺。",
        "from": "T49n2035_025:0258b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂是附托之文。",
        "from": "T49n2035_025:0258b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯神照法師。",
        "from": "T49n2035_025:0258b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘗於法輪用此疏。",
        "from": "T49n2035_025:0258b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "講有宣賜本在東山藏中)禪門口訣(一卷)　覺意三昧(一卷智者親撰)　方等三昧儀(一卷)　法華三昧儀(一卷)法界次第(三卷已上皆親撰)　維摩玄疏(六卷)　四教義(四卷維摩玄疏離出之文)右七十六卷。",
        "from": "T49n2035_025:0258b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖二年。",
        "from": "T49n2035_025:0258b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲奏入大藏。",
        "from": "T49n2035_025:0258b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維摩文疏(二十八卷為煬帝撰。",
        "from": "T49n2035_025:0258b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪略為十卷。",
        "from": "T49n2035_025:0258b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但稱略疏。",
        "from": "T49n2035_025:0258b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與前玄疏各行)　淨土十疑論觀心食法　觀心誦經法　觀心十二部經義　小止觀(智者為兄陳鍼參軍親撰)右共三十三卷。",
        "from": "T49n2035_025:0258b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未入藏。",
        "from": "T49n2035_025:0258c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智度論疏(二十卷)　彌勒成佛經疏(五卷)　觀心釋一切經義(一卷)　彌勒上生經疏(一卷)釋一經玄義(一卷)　坐禪止觀(一卷)　仁王般若經疏(二卷○天竺別集云元豊初得之海賈)　禪門章　般舟行法　雜觀行入道大旨　五方便門　七方便義　七學人義一二三四身義　法門儀　禪門要略(已上各一卷)右四十一卷闕本。",
        "from": "T49n2035_025:0258c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲隨函錄云。",
        "from": "T49n2035_025:0258c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華玄義者。",
        "from": "T49n2035_025:0258c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯解首題。",
        "from": "T49n2035_025:0258c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "統明五時廣辯八教。",
        "from": "T49n2035_025:0258c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出世大意薀在其中。",
        "from": "T49n2035_025:0258c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文句者。",
        "from": "T49n2035_025:0258c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以疏句分節經文。",
        "from": "T49n2035_025:0258c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪云。",
        "from": "T49n2035_025:0258c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以由釋題大義委悉。",
        "from": "T49n2035_025:0258c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故至經文。",
        "from": "T49n2035_025:0258c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粗分章段。",
        "from": "T49n2035_025:0258c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨部各有荊溪之記猶五經之有正義也。",
        "from": "T49n2035_025:0258c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀者。",
        "from": "T49n2035_025:0258c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧之異名。",
        "from": "T49n2035_025:0258c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華之行門也。",
        "from": "T49n2035_025:0258c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前玄義文句。",
        "from": "T49n2035_025:0258c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆明佛世當機得益之事。",
        "from": "T49n2035_025:0258c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱有托事附法觀心之文非部正意。",
        "from": "T49n2035_025:0258c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今止觀正是智者說己心中所行法道。",
        "from": "T49n2035_025:0258c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自行因果化他能所無不具焉。",
        "from": "T49n2035_025:0258c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪以輔行釋之○目錄云。",
        "from": "T49n2035_025:0258c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今家有三種止觀。",
        "from": "T49n2035_025:0258c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一曰漸次。",
        "from": "T49n2035_025:0258c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂解頓行漸。",
        "from": "T49n2035_025:0258c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即禪波羅蜜是也。",
        "from": "T49n2035_025:0258c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二曰不定。",
        "from": "T49n2035_025:0258c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂解頓。",
        "from": "T49n2035_025:0258c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行或頓或漸。",
        "from": "T49n2035_025:0258c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即六妙門是也。",
        "from": "T49n2035_025:0258c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三曰圓頓。",
        "from": "T49n2035_025:0258c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂解行俱頓。",
        "from": "T49n2035_025:0258c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即摩訶止觀是也。",
        "from": "T49n2035_025:0258c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三止觀對根不同。",
        "from": "T49n2035_025:0258c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行相雖殊俱依圓理而為宗本。",
        "from": "T49n2035_025:0258c28_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐梁肅刪止觀為六卷。",
        "from": "T49n2035_025:0259a01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文雖簡要而修相多闕。",
        "from": "T49n2035_025:0259a01_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覽者宜知。",
        "from": "T49n2035_025:0259a02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除智者親筆。",
        "from": "T49n2035_025:0259a02_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘皆章安於法輪之下。",
        "from": "T49n2035_025:0259a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述為疏論也○唐書藝文志云。",
        "from": "T49n2035_025:0259a03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂私記智者詞旨一卷。",
        "from": "T49n2035_025:0259a04_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義記一卷。",
        "from": "T49n2035_025:0259a04_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今未詳何文○釋籤云。",
        "from": "T49n2035_025:0259a05_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀禪門淨名疏等。",
        "from": "T49n2035_025:0259a05_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有餘分說未終者。",
        "from": "T49n2035_025:0259a06_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文。",
        "from": "T49n2035_025:0259a06_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案止觀云。",
        "from": "T49n2035_025:0259a06_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者於玉泉寺一夏敷揚。",
        "from": "T49n2035_025:0259a07_35",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二時慈霔。",
        "from": "T49n2035_025:0259a07_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖樂說不窮纔至見境。",
        "from": "T49n2035_025:0259a08_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法輪停轉後分弗宣。",
        "from": "T49n2035_025:0259a08_38",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輔行云。",
        "from": "T49n2035_025:0259a09_39",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大章第七。",
        "from": "T49n2035_025:0259a09_40",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開為十境。",
        "from": "T49n2035_025:0259a09_41",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至第七境餘不復宣。",
        "from": "T49n2035_025:0259a09_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後三大章及餘三境。",
        "from": "T49n2035_025:0259a10_43",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時逼夏終於茲罷唱(此釋止觀)次第禪門。",
        "from": "T49n2035_025:0259a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即禪波羅密。",
        "from": "T49n2035_025:0259a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦列十大章。",
        "from": "T49n2035_025:0259a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於第六方便文中。",
        "from": "T49n2035_025:0259a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "注云。",
        "from": "T49n2035_025:0259a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若論初禪已後。",
        "from": "T49n2035_025:0259a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發諸禪定深妙境界。",
        "from": "T49n2035_025:0259a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並在第七修證中說。",
        "from": "T49n2035_025:0259a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此文皆悉不流通也(此釋禪門)淨名經十四品。",
        "from": "T49n2035_025:0259a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師疏解。",
        "from": "T49n2035_025:0259a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止佛道品。",
        "from": "T49n2035_025:0259a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八後諸品疏。",
        "from": "T49n2035_025:0259a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是章安述而續之(此釋淨名見補注)。",
        "from": "T49n2035_025:0259a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安",
        "from": "T49n2035_025:0259a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃玄義(二卷)　涅槃經疏(一十卷荊溪治定十五卷今十八卷)　觀心論疏(二卷慈雲目錄云考其所說知入品位然江浙名流或云疑偽)　智者別傳(一卷)　國清百錄(五卷別傳百錄是大師始終化迹)　八教大意(一卷)　南岳記(一卷亡)　真觀法師傳(一卷亡○除亡本外有二十卷入藏)荊溪玄義釋籤(十卷)　文句記(十卷)　止觀輔行(十卷今開二十卷)　止觀義例(一卷慈雲云為初學難解及破異論)　止觀大意(一卷為司封李華出)　維摩略疏(十卷略智者維摩文疏)　維摩廣疏記(六卷。",
        "from": "T49n2035_025:0259a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲云。",
        "from": "T49n2035_025:0259a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對廣文雖少殊亦釋義宛合)　金剛錍論(一卷。",
        "from": "T49n2035_025:0259a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明涅槃佛性義。",
        "from": "T49n2035_025:0259a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已上四十九卷。",
        "from": "T49n2035_025:0259b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同入大藏)　始終心要　十不二門(釋籤部外別行)　止觀搜要記(十卷)　涅槃後分疏(一卷亡)　觀心誦經記(一卷亡)　三觀義　授菩薩戒文(亡)　止觀文句(一卷亡)　華嚴骨目(亡。",
        "from": "T49n2035_025:0259b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今東山有板。",
        "from": "T49n2035_025:0259b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二卷是海東復還者)　法華補助儀方等補闕儀龍興(皓師)　涅槃經注天台(曠師)　心經疏華頂(滿師)　涅槃記(十二卷)靈光(敏師)　光明玄義記廣教(彧師)　光明玄金鼓記　十疑論注石壁(靖師)　觀經疏記奉先(清師)　發揮記(釋光明玄略本)　示珠指(釋十不二門)孤山(圓師)　首楞嚴經疏(十卷)　文殊般若經疏(二卷)　不思議法門經疏　阿彌陀經疏(小本)　四十二章經疏　瑞應經疏　普賢行法經疏　無量義經疏　般若心經疏(上各一卷)　遺教經疏(二卷)　闡義鈔(二卷釋請觀音經疏)　索隱記(四卷釋光明文句)　刊正記(二卷釋觀經疏)　表微記(一卷釋光明玄)　垂裕記(十卷釋淨名略疏)　發源機要記(一卷釋涅槃玄義)　百非鈔(一卷釋涅槃疏金剛身百非義)　三德指歸(十卷釋涅槃疏)　顯性錄(四卷釋金錍)　正義(一卷釋十不二門)　摭華鈔(二卷釋圭峯蘭盆疏)　西資鈔(二卷釋自撰彌陀疏)　谷響鈔(五卷釋自撰楞嚴疏)　詒謀鈔(一卷釋自撰卷經疏)　析重鈔(一卷釋自撰文殊般若經疏大論析重令經取此義)　間居編(五十一卷)　孤山。",
        "from": "T49n2035_025:0259b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年二十一。",
        "from": "T49n2035_025:0259b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始學於奉先清師。",
        "from": "T49n2035_025:0259b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及二年奉先亡。",
        "from": "T49n2035_025:0259b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂往孤山杜門養病。",
        "from": "T49n2035_025:0259b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年四十七而化。",
        "from": "T49n2035_025:0259b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二十四年。",
        "from": "T49n2035_025:0259b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著書百二十卷。",
        "from": "T49n2035_025:0259b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤矣。",
        "from": "T49n2035_025:0259c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶雲",
        "from": "T49n2035_025:0259c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀經疏記(石芝云。",
        "from": "T49n2035_025:0259c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四明承用其義於妙宗鈔中。",
        "from": "T49n2035_025:0259c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無可傳之文)　光明玄贊釋　光明句備急鈔(指南云請尋寶雲備急鈔)四明觀音別行玄記(二卷)　觀音別行疏記(二卷)　光明玄續遺記(三卷)　光明文句記(六卷廣智續記讚佛品)　觀經疏妙宗鈔(三卷)　十不二門指要鈔(二卷)　扶宗記(二卷)　十義書(三卷)　觀心二百問(一卷)　解謗書(三卷)　修懺要旨(一卷)　光明懺儀(一卷)　大悲懺儀(一卷)　石芝。",
        "from": "T49n2035_025:0259c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰四明教行錄。",
        "from": "T49n2035_025:0259c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備載別理隨緣。",
        "from": "T49n2035_025:0259c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "融心解。",
        "from": "T49n2035_025:0259c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消伏三用。",
        "from": "T49n2035_025:0259c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起信論融會章。",
        "from": "T49n2035_025:0259c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義例境觀及問答等文。",
        "from": "T49n2035_025:0259c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲(式師)　金光明護國儀(依百錄本)　請觀音懺儀　往生淨土懺儀　熾盛光懺儀　小彌陀懺儀　法華三昧懺儀　天竺別集　金園集(靈苑集采遺集附)辯才(淨師)　圓事理說天竺(杲師)　指源集淨覺(岳師)　金剛般若疏(二卷)　發軫鈔(三卷釋自撰金剛般若疏)　彌陀經新疏(二卷)　指歸記(二卷釋自撰彌陀疏)　楞嚴文句(三卷)　熏聞記(五卷釋自撰楞嚴文句)　楞嚴集解(十卷)　楞嚴說題　還源記(二卷釋孤山四十二章經疏)　助宣記(二卷釋孤山遺教經疏)　文心解(二卷釋十不二門)　智論樞(節大論之文)　淨名精英　禪門樞要　雜錄名義(二卷)　義學雜編(六卷)　毘曇賢聖圖　起信梨邪生法圖　抉膜書　止疑書　十諫書　雪謗書　施食須知　諸經義題　如意輪課法　涅槃禮讚文　楞嚴禮懺儀　羅漢禮讚文　南山禮讚文　苕溪講外集(二卷)廣智(賢師)　遺編(一卷)　闡幽志(釋光明玄)神照(如師)　普賢行法經疏(二卷)　仁王懺儀扶宗(忠師)　扶宗集(五十卷)　二師口義(十五卷)法真(咸師)　光明十願王　三慧論樝菴(嚴師)　龍王法印經疏(一卷)　安樂行注　空品注　心經注　玄籤備檢(四卷)　文句箋難(四卷)　止觀助覽(四卷)　或對慈辯(諫師)　議方便品題神智(義師)順正記(三卷釋光明玄義)　新記(七卷釋光明文句)　往生記(四卷釋觀經疏)　圓通記(三卷釋十不二門)　寓言記(四卷釋金錍)　集解(三卷釋四教儀)　纂要(六卷釋義例)　三部補注(十四卷)　搜玄(三卷雜出教義)車溪(卿師)　祕密五章慧覺(玉師)　行法經疏(二卷)　祖源記(三卷釋自撰行法經疏)　雜珠記(二卷釋孤山無量義經疏)　尊勝懺法智涌(然師)　宗圓記(四卷釋南岳止觀)　樞要記(二卷釋十不二門)　虎溪集(八卷)　功德天懺儀假名(湛師)　淨業記(四卷釋觀經疏)　護國記(四卷釋光明玄義)　金剛集解(二卷)　假名集(十卷)思溪(煥師)　圓覺疏(二釋)　安樂記(一卷)　百章(教義)　諸天傳(一卷)竹菴(觀師)　楞嚴集解　楞嚴補注　蘭盆補注　圓覺手鑑　金剛通論　金剛事苑　山家義苑　竹菴草錄清辯(齊師)　頂山記(釋戒疏)澤山(咸師)　菩薩戒疏注(三卷破頂山記)　金剛辯惑(一卷)　法華撮要(一卷經音訓)　復宗集(二卷)山堂(性師)　山堂集(五卷)高麗(觀師)　四教儀(一卷依章安八教大意刪補)四明(吉師)　金錍注神悟(謙師)　顯妙解(釋十不二門)妙悟(最師)　評謗(評淨覺雪謗之謬)桐江(瑛師)　注心經　三珠論　淨土修證儀(世人念阿彌陀佛真金色之偈即此儀文)圓通(梵師)　會宗集景德(雲師)　翻譯名義(七卷)證悟(智師)　攻瑛集(追破桐江之說)　十種境界義車溪(榮師)　大部決疑(四卷)仙潭(倫師)　精微集(四卷)　金剛經疏(四卷)浮石(閔師)　憲章集(五卷)佛照(堅師)　大雲請雨經疏(一卷)草堂(元師)　義例隨釋(六卷破神智纂要之說)　輔贊記(一卷教義)吳興(頴師)　宗元錄月堂(詢師)　圓宗解(一卷破虎谿集并一書與赤城益師議其事)四明(照師)　注天台別傳梓菴(倫師)　教義虛堂(空師)　宗極論南湖(因師)　草菴緣止庵(蓮師)　教義寶嚴(韶師)　指南集鏡菴(遷師)　隨錄(教義)　宗源錄環菴(樞師)　教義慈室(雲師)　圓覺直解(三卷)北峯(印師)　金剛新解　釋金剛彌勒偈　教義逸堂(登師)　圓頓宗眼　金錍十義　教義栢庭(月師)　仁王疏記　楞嚴玄覽　金剛會解　圓覺略釋　楞伽通義　簡境十策　四部格言　金錍義解　宗教玄述　十類因革論　緒餘　附鈔箋要(節指要情義)佛祖統紀卷第二十五(終)",
