[
    {
        "source_sentence": "一髻文殊師利童子陀羅尼念",
        "from": "T20n1183_001:0782a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦儀軌",
        "from": "T20n1183_001:0782a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄖩曩􄗭謨引􄗯曼􄒺祚􄭟室哩二合􄗷曳平聲一􄑄矩􄗦麼鼻引",
        "from": "T20n1183_001:0782a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄗽羅􄗞部引􄖪跢􄗱野二􄕗怛􄟰涅􄕤他引􇩂唵引􈇖室哩二合􄑀伽去引􄙊攞􄖻陛四􄗥摩􄚰護􄑀佉􅛲攞陛五􆿅阿上􄙊攞􄗥麼鼻􄑀伽􅛲攞陛二合􄙺娑􄗥麼􄙺三去􄗥滿􆩖多􄑀伽􅛲攞陛􅁥娑嚩二合􄚩賀爾時文殊師利法王子於大眾中說此陀羅尼已。",
        "from": "T20n1183_001:0782b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方世界一切如來。",
        "from": "T20n1183_001:0782b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天龍八部。",
        "from": "T20n1183_001:0782b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大眾咸共讚言。",
        "from": "T20n1183_001:0782b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉文殊師利童真菩薩摩訶薩。",
        "from": "T20n1183_001:0782b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝以大悲願力。",
        "from": "T20n1183_001:0782b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於惡世中為欲󰻑愍薄福有情故。",
        "from": "T20n1183_001:0782b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能演說此不可思議如意摩尼妙法寶藏。",
        "from": "T20n1183_001:0782b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饒益有情作無盡福利。",
        "from": "T20n1183_001:0782b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時文殊師利告大眾言。",
        "from": "T20n1183_001:0782b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於過去佛所授得此陀羅尼。",
        "from": "T20n1183_001:0782b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每於減劫眾生福盡之處即宣說。",
        "from": "T20n1183_001:0782b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼惡世善男子善女人比丘比丘尼優婆塞優婆夷求菩提道。",
        "from": "T20n1183_001:0782b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導一切眾生速令成就一切善事。",
        "from": "T20n1183_001:0782b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越度生死大苦海故。",
        "from": "T20n1183_001:0782b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸令受持神妙章句。",
        "from": "T20n1183_001:0782b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人晝夜精勤。",
        "from": "T20n1183_001:0782b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常誦此陀羅尼憶念不忘。",
        "from": "T20n1183_001:0782b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或但稱讚不思議力。",
        "from": "T20n1183_001:0782b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸化他人令其信受。",
        "from": "T20n1183_001:0782b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心持誦此陀羅尼。",
        "from": "T20n1183_001:0782b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行饒益行。",
        "from": "T20n1183_001:0782b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子善女人。",
        "from": "T20n1183_001:0782b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始已來所有一切五無間等諸惡罪業悉皆消滅。",
        "from": "T20n1183_001:0782b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不沈淪生死大海。",
        "from": "T20n1183_001:0782b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永無三塗惡道之怖。",
        "from": "T20n1183_001:0782b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所生處得宿命智。",
        "from": "T20n1183_001:0782b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根清淨諸相具足。",
        "from": "T20n1183_001:0782b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙色端嚴威德熾盛。",
        "from": "T20n1183_001:0782b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求皆得。",
        "from": "T20n1183_001:0782b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先持諸餘真言。",
        "from": "T20n1183_001:0782b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切悉皆成就。",
        "from": "T20n1183_001:0782b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所施為無不殊勝。",
        "from": "T20n1183_001:0782b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能受持此陀羅尼者。",
        "from": "T20n1183_001:0782b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先曾毀犯尸羅三業虧失。",
        "from": "T20n1183_001:0782b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉得清淨。",
        "from": "T20n1183_001:0782b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消除一切破戒罪業。",
        "from": "T20n1183_001:0782b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離惡道常生人天。",
        "from": "T20n1183_001:0782b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根調柔智惠清淨。",
        "from": "T20n1183_001:0782b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切事中悉得通利。",
        "from": "T20n1183_001:0782b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於正法中得深信力。",
        "from": "T20n1183_001:0782b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有言說聞者信受。",
        "from": "T20n1183_001:0782b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於怨敵中常得殊勝。",
        "from": "T20n1183_001:0782b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切怨家永息惡心不能相害。",
        "from": "T20n1183_001:0782b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天龍常隨擁護。",
        "from": "T20n1183_001:0782b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任運成就廣大福德。",
        "from": "T20n1183_001:0782b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者賓伏。",
        "from": "T20n1183_001:0782b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我悲願深厚無盡福惠饒益一切眾生。",
        "from": "T20n1183_001:0782b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方如來諸大菩薩之所護念。",
        "from": "T20n1183_001:0782c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾聖加持。",
        "from": "T20n1183_001:0782c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓願力故。",
        "from": "T20n1183_001:0782c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切解脫無不成就。",
        "from": "T20n1183_001:0782c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今復說。",
        "from": "T20n1183_001:0782c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此陀羅尼。",
        "from": "T20n1183_001:0782c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫像道場供養儀式求成就法行者。",
        "from": "T20n1183_001:0782c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應先擇願宿曜吉祥之日。",
        "from": "T20n1183_001:0782c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫人受持八戒潔淨。",
        "from": "T20n1183_001:0782c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於白緤上或絹素上。",
        "from": "T20n1183_001:0782c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫一髻文殊師利菩薩童子形。",
        "from": "T20n1183_001:0782c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色半跏坐千葉白蓮花上。",
        "from": "T20n1183_001:0782c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執青蓮華。",
        "from": "T20n1183_001:0782c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華上有如意摩尼寶珠。",
        "from": "T20n1183_001:0782c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手指掌向外垂下五指作滿願印。",
        "from": "T20n1183_001:0782c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熙怡微笑。",
        "from": "T20n1183_001:0782c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種珠鬘頭冠瓔珞莊嚴其身。",
        "from": "T20n1183_001:0782c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫此像已。",
        "from": "T20n1183_001:0782c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一淨室塗拭方壇。",
        "from": "T20n1183_001:0782c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從內向外三院布位。",
        "from": "T20n1183_001:0782c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置十七尊。",
        "from": "T20n1183_001:0782c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具如如五字輪瑜伽法中所說。",
        "from": "T20n1183_001:0782c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以上妙香美餅菓子精誠供養。",
        "from": "T20n1183_001:0782c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置此像於壇東面。",
        "from": "T20n1183_001:0782c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者西面。",
        "from": "T20n1183_001:0782c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向東對像。",
        "from": "T20n1183_001:0782c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應取白月八日起首念誦。",
        "from": "T20n1183_001:0782c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日誦前真言八百遍或一千遍。",
        "from": "T20n1183_001:0782c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於像前臥一心思念我文殊取睡。",
        "from": "T20n1183_001:0782c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則於夢中必見文殊作小童子形。",
        "from": "T20n1183_001:0782c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見此相。",
        "from": "T20n1183_001:0782c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知已蒙加被。",
        "from": "T20n1183_001:0782c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸願心成。",
        "from": "T20n1183_001:0782c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求皆得。",
        "from": "T20n1183_001:0782c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說言教人皆信受。",
        "from": "T20n1183_001:0782c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取蜜哩底藥此名白胡桝誦前真言加持八千遍已。",
        "from": "T20n1183_001:0782c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口含此藥。",
        "from": "T20n1183_001:0782c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若至王宮或百官處。",
        "from": "T20n1183_001:0782c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言發嚮應所求皆得。",
        "from": "T20n1183_001:0782c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說言教信受伏從不敢違逆。",
        "from": "T20n1183_001:0782c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取帝支縛底藥此名貝多皮陰乾以前真言加持八千遍。",
        "from": "T20n1183_001:0782c21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於鉢中持而乞食。",
        "from": "T20n1183_001:0782c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須飲食衣服乃至金銀七寶須者皆得。",
        "from": "T20n1183_001:0782c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾人愛敬競申供養。",
        "from": "T20n1183_001:0782c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切鬪諍之處皆得勝。",
        "from": "T20n1183_001:0782c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於白月八日。",
        "from": "T20n1183_001:0782c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此文殊師利像前。",
        "from": "T20n1183_001:0782c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燃燈食三白食。",
        "from": "T20n1183_001:0782c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以白食及種種白花燒白檀香供養。",
        "from": "T20n1183_001:0782c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此真言八千遍。",
        "from": "T20n1183_001:0782c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍數足已。",
        "from": "T20n1183_001:0782c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便就像前眠睡。",
        "from": "T20n1183_001:0782c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我文殊師利為現其淨妙色身。",
        "from": "T20n1183_001:0782c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所願皆得。",
        "from": "T20n1183_001:0782c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日常與一千金錢。",
        "from": "T20n1183_001:0782c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應貯積。",
        "from": "T20n1183_001:0782c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總將供供養三寶及修功德。",
        "from": "T20n1183_001:0782c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日誦八百遍。",
        "from": "T20n1183_001:0783a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力隨分供養。",
        "from": "T20n1183_001:0783a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應間闕。",
        "from": "T20n1183_001:0783a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法以一銀鉢加持一百八遍或八百遍或二十一遍。",
        "from": "T20n1183_001:0783a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於文殊師利像前安白練上。",
        "from": "T20n1183_001:0783a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以白練覆蓋其上。",
        "from": "T20n1183_001:0783a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經一宿晨朝手探鉢中。",
        "from": "T20n1183_001:0783a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得八百金錢。",
        "from": "T20n1183_001:0783a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上所作諸法當宜密作。",
        "from": "T20n1183_001:0783a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不得使一人知聞。",
        "from": "T20n1183_001:0783a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除同行願同求此事者。",
        "from": "T20n1183_001:0783a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親伴一人。",
        "from": "T20n1183_001:0783a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不得向外人說。",
        "from": "T20n1183_001:0783a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加被之力當時頓失功。",
        "from": "T20n1183_001:0783a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須慎密。",
        "from": "T20n1183_001:0783a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能依教謹慎。",
        "from": "T20n1183_001:0783a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日金錢常供更無斷施。",
        "from": "T20n1183_001:0783a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已上諸法不可總作。",
        "from": "T20n1183_001:0783a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但隨意所樂成就一事。",
        "from": "T20n1183_001:0783a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍須先嚴身心。",
        "from": "T20n1183_001:0783a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數數飲牛五淨。",
        "from": "T20n1183_001:0783a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起慈悲心。",
        "from": "T20n1183_001:0783a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜精勤依教無虧。",
        "from": "T20n1183_001:0783a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必得現生證上上悉地。",
        "from": "T20n1183_001:0783a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心真言曰。",
        "from": "T20n1183_001:0783a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈁴唵引􄙺娑􄗥麼􆩖那􈇖始哩二合􆿁吽􅁥娑嚩二合􄚩賀隨心真言􈁴唵引􆿅阿􄙢捨􄗥摩􄕍𩕳􆿁吽􅁥娑嚩二合􄚩賀結壇界真言􇩂唵􄕵禰􄙢捨􄗥摩􄕍寧􆿁吽引􅁥娑嚩二合􄚩賀結四方界真言􇩂唵引􄙺三􄗥摩􄖩難􄕗多吉􄗥摩􄕍寧􆿁吽􅁥娑嚩二合􄚩賀以此真言加持水二十一遍。",
        "from": "T20n1183_001:0783a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散於四面即成結界若常於文殊師利菩薩前持誦此真言。",
        "from": "T20n1183_001:0783a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日八百遍不闕。",
        "from": "T20n1183_001:0783a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日常得伍百金錢。",
        "from": "T20n1183_001:0783a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便須奉施供養三寶。",
        "from": "T20n1183_001:0783a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有隨己分喫用。",
        "from": "T20n1183_001:0783a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得求無義利處違教用之。",
        "from": "T20n1183_001:0783a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不得貯積。",
        "from": "T20n1183_001:0783a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須每日常已種種餅菓供養文殊菩薩。",
        "from": "T20n1183_001:0783a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "替拔及時分勿令不清淨。",
        "from": "T20n1183_001:0783b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及自身衣服極須淨潔。",
        "from": "T20n1183_001:0783b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數數洗浴勿令垢穢。",
        "from": "T20n1183_001:0783b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見非法沙門婆羅門。",
        "from": "T20n1183_001:0783b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或顏色樵顇或非威儀身形醜陋。",
        "from": "T20n1183_001:0783b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必不得輕笑毀謗。",
        "from": "T20n1183_001:0783b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大聖文殊種種化現異類之身。",
        "from": "T20n1183_001:0783b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試驗調伏修行人心。",
        "from": "T20n1183_001:0783b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲令常起慈愍普皆平等。",
        "from": "T20n1183_001:0783b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切有情生珍敬心無分別心。",
        "from": "T20n1183_001:0783b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無染著心無增愛心。",
        "from": "T20n1183_001:0783b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大無礙。",
        "from": "T20n1183_001:0783b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡當作當來成佛之想。",
        "from": "T20n1183_001:0783b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者若能如是依教住無分別精勤持誦。",
        "from": "T20n1183_001:0783b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求之願文殊大聖速為滿足。",
        "from": "T20n1183_001:0783b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉢中化變日常盈滿用無窮盡。",
        "from": "T20n1183_001:0783b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法以昌𮑱根用前身真言加持八千返置鉢中。",
        "from": "T20n1183_001:0783b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持此鉢入城乞求。",
        "from": "T20n1183_001:0783b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須衣服悉得隨意。",
        "from": "T20n1183_001:0783b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取安悉香白檀香蘇合香。",
        "from": "T20n1183_001:0783b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此三種香常用供養。",
        "from": "T20n1183_001:0783b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處常說燒此香不得間斷。",
        "from": "T20n1183_001:0783b14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求願速得滿足。",
        "from": "T20n1183_001:0783b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取五色線長一尋。",
        "from": "T20n1183_001:0783b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言加持一百八遍。",
        "from": "T20n1183_001:0783b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結作一結滿二十一結。",
        "from": "T20n1183_001:0783b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置線結於鉢中安像前。",
        "from": "T20n1183_001:0783b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力供養。",
        "from": "T20n1183_001:0783b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊日日於此鉢中現出上上黃金二十一兩。",
        "from": "T20n1183_001:0783b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此金必不得停貯積集。",
        "from": "T20n1183_001:0783b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施用修功德供養三寶用無盡竭。",
        "from": "T20n1183_001:0783b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若藏貯積集。",
        "from": "T20n1183_001:0783b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便即隱沒更不復出。",
        "from": "T20n1183_001:0783b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法有藥名數沙波多那。",
        "from": "T20n1183_001:0783b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名薩沙波此云白芥子。",
        "from": "T20n1183_001:0783b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有藥名摩訶弭多此藥出蜀地。",
        "from": "T20n1183_001:0783b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有大風大雨霖霔久不晴明者。",
        "from": "T20n1183_001:0783b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前件二藥共置一處。",
        "from": "T20n1183_001:0783b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用身真言加持此二藥八千遍。",
        "from": "T20n1183_001:0783b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲上虛空中。",
        "from": "T20n1183_001:0783b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風雨便止。",
        "from": "T20n1183_001:0783b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時若炎旱無雨。",
        "from": "T20n1183_001:0783b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取數沙波多那加持八千遍。",
        "from": "T20n1183_001:0783b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲散於有龍水中。",
        "from": "T20n1183_001:0783b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便即大雨即下。",
        "from": "T20n1183_001:0783b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法將持此加持藥散大戰陣中。",
        "from": "T20n1183_001:0783b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切刀杖弓箭無堪用者。",
        "from": "T20n1183_001:0783b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設用定不傷害。",
        "from": "T20n1183_001:0783b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若散置草中或樹林或一切田苗稼中者。",
        "from": "T20n1183_001:0783b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉無虫類能傷損者。",
        "from": "T20n1183_001:0783b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若散石窟中或竹林間或粳米及餘五穀田中。",
        "from": "T20n1183_001:0783c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便即增多取之無盡。",
        "from": "T20n1183_001:0783c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若散自身頭上。",
        "from": "T20n1183_001:0783c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切鬪諍之處皆得殊勝。",
        "from": "T20n1183_001:0783c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入王宮乃至大臣家諸百官家。",
        "from": "T20n1183_001:0783c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆得奉命恭敬。",
        "from": "T20n1183_001:0783c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若散商人賈客之中。",
        "from": "T20n1183_001:0783c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貨物并無竊盜。",
        "from": "T20n1183_001:0783c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡是賊徒不能侵奪。",
        "from": "T20n1183_001:0783c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若散擲四方。",
        "from": "T20n1183_001:0783c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切鬼神夜叉羅剎及諸妖魅不能為害。",
        "from": "T20n1183_001:0783c06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若散失火之處。",
        "from": "T20n1183_001:0783c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火便自滅不能燒物。",
        "from": "T20n1183_001:0783c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若散水中。",
        "from": "T20n1183_001:0783c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則便停流不動。",
        "from": "T20n1183_001:0783c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更有眾多餘法。",
        "from": "T20n1183_001:0783c07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能盡說。",
        "from": "T20n1183_001:0783c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但得前法成就有驗。",
        "from": "T20n1183_001:0783c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已後隨自意作者皆成。",
        "from": "T20n1183_001:0783c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不勞遍說。",
        "from": "T20n1183_001:0783c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定無疑。",
        "from": "T20n1183_001:0783c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言有大威德光明不思議力。",
        "from": "T20n1183_001:0783c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難可度量。",
        "from": "T20n1183_001:0783c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦成就者除不至心。",
        "from": "T20n1183_001:0783c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一髻文殊童子速成就無盡寶藏經此經上元元年九月十八日。",
        "from": "T20n1183_001:0783c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門嚩日羅二合麼拏庾灑二合唐云金剛福壽。",
        "from": "T20n1183_001:0783c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於秦州開元寺輪寺三院□□□□貞元十七年三月翻經沙門再過□□□八硤內忠州薩使君宅。",
        "from": "T20n1183_001:0783c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見天竺僧封勘定入藏記。",
        "from": "T20n1183_001:0783c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "㚣舊住尊者導師過去日月燈明如來傳法聖者八王子之化導之師釋迦如來九世祖師。",
        "from": "T20n1183_001:0783c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方金色世界龍種上智尊王如來胎藏海會四波羅蜜之中第二尊四方四佛如來智母大日如來同體別身也身在法界一照三世眾聖之母一切慈母發菩提心者為證果之依處源本者也。",
        "from": "T20n1183_001:0783c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊慈護真言唵沒馱昧怛哩引耶乞灑二合憾犯土之所可誦也文殊師利忿怒陀羅尼唵嚩日羅底乞叉拏三合俱盧二合馱瞋那瞋那吽泮吒用此真護身辟除結界。",
        "from": "T20n1183_001:0784a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨諸香花及一切供具等。",
        "from": "T20n1183_001:0784a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普當願眾生遇此教。",
        "from": "T20n1183_001:0784a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼殊當知識。",
        "from": "T20n1183_001:0784a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速證般若功智。",
        "from": "T20n1183_001:0784a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾成無上兩足尊。",
        "from": "T20n1183_001:0784a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊治瘡呪那莫薩婆勃入馱南阿指多耶諾步多嚧比𠸎唵𭓷哩娑婆訶七佛藥師經中瘧病心呪怛姪他惡窶莫怛囉窶麼麼窶具麗訶呼去𮠴去末羅末羅末羅竪樹囇布囉莎訶奉誦七佛名並十二神將名。",
        "from": "T20n1183_001:0784a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唱書此呪繫之肘後。",
        "from": "T20n1183_001:0784a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若差已置清淨所云云。",
        "from": "T20n1183_001:0784a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善名勝吉祥王如來。",
        "from": "T20n1183_001:0784a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶月智嚴光音自在王如來。",
        "from": "T20n1183_001:0784a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金色寶光妙行成就如來。",
        "from": "T20n1183_001:0784a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無憂最勝吉祥王如來。",
        "from": "T20n1183_001:0784a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法海勝慧遊戲神通如來。",
        "from": "T20n1183_001:0784a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藥師瑠璃光如來。",
        "from": "T20n1183_001:0784a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "康和三年三月七日書了　　賢覺",
        "from": "T20n1183_001:0784a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　一校了　以座主御房御本也",
        "from": "T20n1183_001:0784a20_0",
        "context_with_next_sentence": true
    }
]