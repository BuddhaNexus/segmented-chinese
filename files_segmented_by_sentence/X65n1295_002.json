{
    "X65n1295_002:0481b11_0": "禪宗頌古聯珠通集卷第二",
    "X65n1295_002:0481b13_0": "宋池州報恩光孝禪寺沙門法應　集",
    "X65n1295_002:0481b14_0": "元紹興天衣萬壽禪寺沙門普會續集",
    "X65n1295_002:0481b15_0": "世尊機緣",
    "X65n1295_002:0481b16_0": "釋迦牟尼世尊初降生。",
    "X65n1295_002:0481b16_1": "一手指天一手指地。",
    "X65n1295_002:0481b16_2": "周行七步目顧四方云。",
    "X65n1295_002:0481b17_3": "天上天下唯吾獨尊。",
    "X65n1295_002:0481b17_4": "後雲門云。",
    "X65n1295_002:0481b18_5": "我當時若見。",
    "X65n1295_002:0481b18_6": "一棒打殺與狗子喫。",
    "X65n1295_002:0481b18_7": "貴圖天下太平　瑯琊覺云。",
    "X65n1295_002:0481b19_8": "可謂將此深心奉塵剎。",
    "X65n1295_002:0481b19_9": "是則名為報佛恩。",
    "X65n1295_002:0481b20_10": "　頌曰。",
    "X65n1295_002:0481b21_0": "四月八佛降生日。",
    "X65n1295_002:0481b21_1": "指天指地稱第一。",
    "X65n1295_002:0481b21_2": "九龍噴水沐金軀。",
    "X65n1295_002:0481b22_3": "摩訶般若波羅蜜。",
    "X65n1295_002:0481b22_4": "(洞山聰)。",
    "X65n1295_002:0481b23_0": "指天指地語琅琅。",
    "X65n1295_002:0481b23_1": "送語傳言出畫堂。",
    "X65n1295_002:0481b23_2": "使者尚能多意氣。",
    "X65n1295_002:0481b24_3": "主人應是不尋常。",
    "X65n1295_002:0481b24_4": "(泉大道)。",
    "X65n1295_002:0481c01_0": "寶殿龍樓忽降時。",
    "X65n1295_002:0481c01_1": "周行七步豁眉開。",
    "X65n1295_002:0481c01_2": "言不是言無謙遜。",
    "X65n1295_002:0481c02_3": "天上人間更有誰。",
    "X65n1295_002:0481c02_4": "(野軒遵)。",
    "X65n1295_002:0481c03_0": "開基剏業前王事。",
    "X65n1295_002:0481c03_1": "端拱持盈後帝心。",
    "X65n1295_002:0481c03_2": "劒戟盡為農器用。",
    "X65n1295_002:0481c04_3": "此時誰報太平音。",
    "X65n1295_002:0481c04_4": "(佛印元)。",
    "X65n1295_002:0481c05_0": "纔降王宮示本然。",
    "X65n1295_002:0481c05_1": "周行七步又重宣。",
    "X65n1295_002:0481c05_2": "指天指地無人會。",
    "X65n1295_002:0481c06_3": "獨震雷音徧大千。",
    "X65n1295_002:0481c06_4": "(海印信)。",
    "X65n1295_002:0481c07_0": "混沌未分人未曉。",
    "X65n1295_002:0481c07_1": "乾坤纔剖事全彰。",
    "X65n1295_002:0481c07_2": "天生伎倆能奇怪。",
    "X65n1295_002:0481c08_3": "末上鍮他弄一場。",
    "X65n1295_002:0481c08_4": "(保寧勇)。",
    "X65n1295_002:0481c09_0": "七步周行手指天。",
    "X65n1295_002:0481c09_1": "衲僧棒下命難全。",
    "X65n1295_002:0481c09_2": "母胎出後成何事。",
    "X65n1295_002:0481c10_3": "爭似閻浮未降前。",
    "X65n1295_002:0481c10_4": "(張無盡)。",
    "X65n1295_002:0481c11_0": "周行七步便稱尊。",
    "X65n1295_002:0481c11_1": "家醜那堪放出門。",
    "X65n1295_002:0481c11_2": "只向母胎度人畢。",
    "X65n1295_002:0481c12_3": "也須一棒一條痕。",
    "X65n1295_002:0481c12_4": "(長靈卓)。",
    "X65n1295_002:0481c13_0": "纔生能步便英靈。",
    "X65n1295_002:0481c13_1": "天上人間我獨尊。",
    "X65n1295_002:0481c13_2": "可笑瞻前不顧後。",
    "X65n1295_002:0481c14_3": "那知身後有雲門。",
    "X65n1295_002:0481c14_4": "(草堂清)。",
    "X65n1295_002:0481c15_0": "一火鑄成金彈子。",
    "X65n1295_002:0481c15_1": "團圞都不費鉗鎚。",
    "X65n1295_002:0481c15_2": "拈來萬仞峯頭放。",
    "X65n1295_002:0481c16_3": "打落天邊白鳳兒。",
    "X65n1295_002:0481c16_4": "(慈受深)。",
    "X65n1295_002:0481c17_0": "無憂樹下誕全身。",
    "X65n1295_002:0481c17_1": "七步周行事斬新。",
    "X65n1295_002:0481c17_2": "相見謂言侵早起。",
    "X65n1295_002:0481c18_3": "誰知更有夜行人。",
    "X65n1295_002:0481c18_4": "(南華昺)。",
    "X65n1295_002:0481c19_0": "老胡不免出胞胎。",
    "X65n1295_002:0481c19_1": "也解人前恁麼來。",
    "X65n1295_002:0481c19_2": "指地指天稱第一。",
    "X65n1295_002:0481c20_3": "眾生四十九年灾。",
    "X65n1295_002:0481c20_4": "(鼓山珪)。",
    "X65n1295_002:0481c21_0": "老漢纔生便著忙。",
    "X65n1295_002:0481c21_1": "周行七步似顛狂。",
    "X65n1295_002:0481c21_2": "賺他無限癡男女。",
    "X65n1295_002:0481c22_3": "開眼堂堂入鑊湯。",
    "X65n1295_002:0481c22_4": "(徑山杲)。",
    "X65n1295_002:0481c23_0": "兜羅綿手指天地。",
    "X65n1295_002:0481c23_1": "紺目重瞳顧四維。",
    "X65n1295_002:0481c23_2": "七步周行渾屬我。",
    "X65n1295_002:0481c24_3": "一生賣弄小孩兒。",
    "X65n1295_002:0481c24_4": "(佛燈珣)。",
    "X65n1295_002:0482a01_0": "黑白未分全體妙。",
    "X65n1295_002:0482a01_1": "纔彰文彩便成乖。",
    "X65n1295_002:0482a01_2": "因茲漏泄家風甚。",
    "X65n1295_002:0482a02_3": "末代兒孫鼻孔喎。",
    "X65n1295_002:0482a02_4": "(月菴果)。",
    "X65n1295_002:0482a03_0": "纔出胞胎便逸羣。",
    "X65n1295_002:0482a03_1": "周行七步獨稱尊。",
    "X65n1295_002:0482a03_2": "當時若見雲門老。",
    "X65n1295_002:0482a04_3": "不到如今累子孫。",
    "X65n1295_002:0482a04_4": "(踈山如)。",
    "X65n1295_002:0482a05_0": "【續收】老胡種種空意氣。",
    "X65n1295_002:0482a05_1": "一手指天兼指地。",
    "X65n1295_002:0482a05_2": "當時盡謂獨稱尊。",
    "X65n1295_002:0482a06_3": "今日翻思誰不是。",
    "X65n1295_002:0482a06_4": "人人盡在光明裏。",
    "X65n1295_002:0482a06_5": "臨文不用更加諱。",
    "X65n1295_002:0482a07_6": "(育王達)。",
    "X65n1295_002:0482a08_0": "千年石虎產麒麟。",
    "X65n1295_002:0482a08_1": "一角通身五彩明。",
    "X65n1295_002:0482a08_2": "金鎻玉關渾掣斷。",
    "X65n1295_002:0482a09_3": "毗盧界內鼓煙塵。",
    "X65n1295_002:0482a09_4": "(雪竇宗)。",
    "X65n1295_002:0482a10_0": "美如西子離金闕。",
    "X65n1295_002:0482a10_1": "嬌似楊妃下玉樓。",
    "X65n1295_002:0482a10_2": "猶把琵琶半遮面。",
    "X65n1295_002:0482a11_3": "不令人見轉風流。",
    "X65n1295_002:0482a11_4": "(佛鑑懃)。",
    "X65n1295_002:0482a12_0": "毗嵐園裏喪嘉聲。",
    "X65n1295_002:0482a12_1": "分手徒勞布惡名。",
    "X65n1295_002:0482a12_2": "決是一文偷不得。",
    "X65n1295_002:0482a13_3": "至今虗作不良人。",
    "X65n1295_002:0482a13_4": "(瞎堂遠)。",
    "X65n1295_002:0482a14_0": "五天一隻蓬蒿箭。",
    "X65n1295_002:0482a14_1": "攪動支那百萬兵。",
    "X65n1295_002:0482a14_2": "不得雲門行正令。",
    "X65n1295_002:0482a15_3": "幾乎錯認定盤星。",
    "X65n1295_002:0482a15_4": "(石窻恭)。",
    "X65n1295_002:0482a16_0": "周行四顧獨稱尊。",
    "X65n1295_002:0482a16_1": "平地無風起浪痕。",
    "X65n1295_002:0482a16_2": "禍及私門猶自可。",
    "X65n1295_002:0482a17_3": "誰知千古累兒孫。",
    "X65n1295_002:0482a17_4": "(懶菴需)。",
    "X65n1295_002:0482a18_0": "掀翻地軸乾坤窄。",
    "X65n1295_002:0482a18_1": "撥轉天輪宇宙寬。",
    "X65n1295_002:0482a18_2": "須向強中呈好手。",
    "X65n1295_002:0482a19_3": "虗空打碎劫初看。",
    "X65n1295_002:0482a19_4": "(正堂辯)。",
    "X65n1295_002:0482a20_0": "奴兒婢子。",
    "X65n1295_002:0482a20_1": "十生九死。",
    "X65n1295_002:0482a20_2": "於裏不正。",
    "X65n1295_002:0482a20_3": "被外邊使。",
    "X65n1295_002:0482a20_4": "縱饒開口便過頭。",
    "X65n1295_002:0482a21_5": "未免渾身輥泥水。",
    "X65n1295_002:0482a21_6": "(月堂昌)。",
    "X65n1295_002:0482a22_0": "無憂樹下浴嬰孩。",
    "X65n1295_002:0482a22_1": "清曉薔微帶露開。",
    "X65n1295_002:0482a22_2": "轉過衲僧相見處。",
    "X65n1295_002:0482a23_3": "後槽驢馬出胞胎。",
    "X65n1295_002:0482a23_4": "(天童淨)。",
    "X65n1295_002:0482a24_0": "草本無端拈出來。",
    "X65n1295_002:0482a24_1": "更加註脚轉癡呆。",
    "X65n1295_002:0482a24_2": "西天此土誰知己。",
    "X65n1295_002:0482b01_3": "夜半優曇火裏開。",
    "X65n1295_002:0482b01_4": "(應菴華)。",
    "X65n1295_002:0482b02_0": "走出門風相副稱。",
    "X65n1295_002:0482b02_1": "東西南北更無人。",
    "X65n1295_002:0482b02_2": "看來不得韶陽老。",
    "X65n1295_002:0482b03_3": "未免兒孫惹客塵。",
    "X65n1295_002:0482b03_4": "(或菴體)。",
    "X65n1295_002:0482b04_0": "指天指地。",
    "X65n1295_002:0482b04_1": "無處回避。",
    "X65n1295_002:0482b04_2": "瞿曇瞿曇。",
    "X65n1295_002:0482b04_3": "討甚巴鼻。",
    "X65n1295_002:0482b04_4": "(月林觀)。",
    "X65n1295_002:0482b05_0": "自謂五更侵早起。",
    "X65n1295_002:0482b05_1": "誰知更有夜行人。",
    "X65n1295_002:0482b05_2": "條風塊雨非云昔。",
    "X65n1295_002:0482b06_3": "堯舜垂衣萬國賓。",
    "X65n1295_002:0482b06_4": "(運菴巖)。",
    "X65n1295_002:0482b07_0": "未曾撞入摩耶腹。",
    "X65n1295_002:0482b07_1": "兩手知他甚處安。",
    "X65n1295_002:0482b07_2": "右脅出來魔境現。",
    "X65n1295_002:0482b08_3": "只堪惆悵不堪看。",
    "X65n1295_002:0482b08_4": "(天目禮)。",
    "X65n1295_002:0482b09_0": "一聲哇地便吒哩。",
    "X65n1295_002:0482b09_1": "突出如斯大闡提。",
    "X65n1295_002:0482b09_2": "此土西天起殃害。",
    "X65n1295_002:0482b10_3": "堂堂洗土不成泥。",
    "X65n1295_002:0482b10_4": "(北磵簡)。",
    "X65n1295_002:0482b11_0": "七步周行猶彷彿。",
    "X65n1295_002:0482b11_1": "指天指地不分明。",
    "X65n1295_002:0482b11_2": "是非既落傍人耳。",
    "X65n1295_002:0482b12_3": "洗到驢年也不清。",
    "X65n1295_002:0482b12_4": "(虗堂愚)。",
    "X65n1295_002:0482b13_0": "兩手指天地。",
    "X65n1295_002:0482b13_1": "周行步更多。",
    "X65n1295_002:0482b13_2": "可憐黃面老。",
    "X65n1295_002:0482b13_3": "螃蟹落湯鍋。",
    "X65n1295_002:0482b14_0": "(西巖惠)。",
    "X65n1295_002:0482b15_0": "生來自恨錯同條。",
    "X65n1295_002:0482b15_1": "鐵鑄心肝也合銷。",
    "X65n1295_002:0482b15_2": "還你獨尊三界內。",
    "X65n1295_002:0482b16_3": "奈何今日又明朝。",
    "X65n1295_002:0482b16_4": "(覺菴真)。",
    "X65n1295_002:0482b17_0": "僧問九峯虔云。",
    "X65n1295_002:0482b17_1": "承聞和尚有言。",
    "X65n1295_002:0482b17_2": "諸聖間出祇是傳語人。",
    "X65n1295_002:0482b18_3": "是否。",
    "X65n1295_002:0482b18_4": "師曰是。",
    "X65n1295_002:0482b18_5": "曰世尊一手指天一手指地云。",
    "X65n1295_002:0482b19_6": "天上天下唯吾獨尊。",
    "X65n1295_002:0482b19_7": "和尚為甚麼却喚作傳語人。",
    "X65n1295_002:0482b20_8": "師曰。",
    "X65n1295_002:0482b20_9": "祗為一手指天一手指地。",
    "X65n1295_002:0482b20_10": "所以喚作傳語人。",
    "X65n1295_002:0482b21_11": "　頌曰。",
    "X65n1295_002:0482b22_0": "妙相圓明不可親。",
    "X65n1295_002:0482b22_1": "奴兒婢子自殷勤。",
    "X65n1295_002:0482b22_2": "指天指地稱尊大。",
    "X65n1295_002:0482b23_3": "也是傳言送語人。",
    "X65n1295_002:0482b23_4": "(丹霞淳)。",
    "X65n1295_002:0482b24_0": "【增收】世尊未離兜率已降王宮。",
    "X65n1295_002:0482b24_1": "未出母胎度人已畢。",
    "X65n1295_002:0482c01_0": "　頌曰。",
    "X65n1295_002:0482c02_0": "大象本無形。",
    "X65n1295_002:0482c02_1": "至虗包萬有。",
    "X65n1295_002:0482c02_2": "末後已太過。",
    "X65n1295_002:0482c02_3": "面南看北斗。",
    "X65n1295_002:0482c03_0": "王宮兜率度生出胎。",
    "X65n1295_002:0482c03_1": "始終一貫初無去來。",
    "X65n1295_002:0482c03_2": "掃蹤滅跡除根蒂。",
    "X65n1295_002:0482c04_3": "火裏蓮華處處開。",
    "X65n1295_002:0482c04_4": "(圓悟勤)。",
    "X65n1295_002:0482c05_0": "是非海裏橫身入。",
    "X65n1295_002:0482c05_1": "豺虎羣中自在行。",
    "X65n1295_002:0482c05_2": "莫把是非來辨我。",
    "X65n1295_002:0482c06_3": "平生穿鑿不相干。",
    "X65n1295_002:0482c06_4": "(鼓山珪)。",
    "X65n1295_002:0482c07_0": "利刃有蜜不須舐。",
    "X65n1295_002:0482c07_1": "蠱毒之家水莫甞。",
    "X65n1295_002:0482c07_2": "不舐不嘗俱不犯。",
    "X65n1295_002:0482c08_3": "端然衣錦自還鄉。",
    "X65n1295_002:0482c08_4": "(徑山杲)。",
    "X65n1295_002:0482c09_0": "本離兜率降王宮。",
    "X65n1295_002:0482c09_1": "便就刀山入鑊湯。",
    "X65n1295_002:0482c09_2": "等閑擒下白拈賊。",
    "X65n1295_002:0482c10_3": "滿眼俱為敗露贓。",
    "X65n1295_002:0482c10_4": "(瞎堂遠)。",
    "X65n1295_002:0482c11_0": "垂鈎不似迷津客。",
    "X65n1295_002:0482c11_1": "張網誠非待兔人。",
    "X65n1295_002:0482c11_2": "半夜烏鷄何處去。",
    "X65n1295_002:0482c12_3": "天明吞却玉麒麟。",
    "X65n1295_002:0482c12_4": "(正堂辯)。",
    "X65n1295_002:0482c13_0": "肌骨當初赫赤窮。",
    "X65n1295_002:0482c13_1": "面皮今日厚千重。",
    "X65n1295_002:0482c13_2": "撩頭搭尾應更點。",
    "X65n1295_002:0482c14_3": "嬴賽闍黎齋後鍾。",
    "X65n1295_002:0482c14_4": "(或菴體)。",
    "X65n1295_002:0482c15_0": "【增收】世尊初於臈月八日明星出時。",
    "X65n1295_002:0482c15_1": "忽云。",
    "X65n1295_002:0482c15_2": "奇哉一切眾生。",
    "X65n1295_002:0482c16_3": "具有如來智慧德相。",
    "X65n1295_002:0482c16_4": "但以妄想執著不能證得。",
    "X65n1295_002:0482c17_5": "　頌曰。",
    "X65n1295_002:0482c18_0": "瞿曇失却眼睛時。",
    "X65n1295_002:0482c18_1": "雪裏梅華只一枝。",
    "X65n1295_002:0482c18_2": "而今到處生荊棘。",
    "X65n1295_002:0482c19_3": "却笑春風惱亂吹。",
    "X65n1295_002:0482c19_4": "(晦堂心)。",
    "X65n1295_002:0482c20_0": "黃面瞿曇不丈夫。",
    "X65n1295_002:0482c20_1": "明星現處自塗糊。",
    "X65n1295_002:0482c20_2": "如今好覔生蛇弄。",
    "X65n1295_002:0482c21_3": "免使兒孫在半途。",
    "X65n1295_002:0482c21_4": "(佛心才)。",
    "X65n1295_002:0482c22_0": "一見明星夢便回。",
    "X65n1295_002:0482c22_1": "千年桃核長青梅。",
    "X65n1295_002:0482c22_2": "雖然不是調羮味。",
    "X65n1295_002:0482c23_3": "曾與將軍止渴來。",
    "X65n1295_002:0482c23_4": "(雪竇宗)。",
    "X65n1295_002:0482c24_0": "出得山來早是遲。",
    "X65n1295_002:0482c24_1": "却於世上討便宜。",
    "X65n1295_002:0482c24_2": "直饒一念超三界。",
    "X65n1295_002:0483a01_3": "好與拳頭劈面椎。",
    "X65n1295_002:0483a01_4": "(佛照光)。",
    "X65n1295_002:0483a02_0": "此老從來謾自誇。",
    "X65n1295_002:0483a02_1": "無端病眼見空華。",
    "X65n1295_002:0483a02_2": "直教當下超三際。",
    "X65n1295_002:0483a03_3": "檢點將來未到家。",
    "X65n1295_002:0483a03_4": "(無用全)。",
    "X65n1295_002:0483a04_0": "六年落草野狐精。",
    "X65n1295_002:0483a04_1": "跳出渾身是葛藤。",
    "X65n1295_002:0483a04_2": "打失眼睛無處覓。",
    "X65n1295_002:0483a05_3": "誑人剛道悟明星。",
    "X65n1295_002:0483a05_4": "(天童淨)。",
    "X65n1295_002:0483a06_0": "二千年前黃面老。",
    "X65n1295_002:0483a06_1": "舉頭莫是見明星。",
    "X65n1295_002:0483a06_2": "茫茫宇宙人無數。",
    "X65n1295_002:0483a07_3": "幾個男兒眼有睛。",
    "X65n1295_002:0483a07_4": "(肯堂充)。",
    "X65n1295_002:0483a08_0": "雪嶺崎嶇歲月深。",
    "X65n1295_002:0483a08_1": "何曾夜半見明星。",
    "X65n1295_002:0483a08_2": "可憐業識茫茫者。",
    "X65n1295_002:0483a09_3": "蹉過如來正法輪。",
    "X65n1295_002:0483a09_4": "(妙峯善)。",
    "X65n1295_002:0483a10_0": "夜半明星出現時。",
    "X65n1295_002:0483a10_1": "分明喪盡目前機。",
    "X65n1295_002:0483a10_2": "若言總具如來相。",
    "X65n1295_002:0483a11_3": "也是空拳誑小兒。",
    "X65n1295_002:0483a11_4": "(頑石空)。",
    "X65n1295_002:0483a12_0": "六載隈藏在雪山。",
    "X65n1295_002:0483a12_1": "灰頭土面自慚顏。",
    "X65n1295_002:0483a12_2": "今朝忽覩明星現。",
    "X65n1295_002:0483a13_3": "始覺從前被眼瞞。",
    "X65n1295_002:0483a13_4": "(鐵山仁)。",
    "X65n1295_002:0483a14_0": "六載將身草裏埋。",
    "X65n1295_002:0483a14_1": "當時有眼幾曾開。",
    "X65n1295_002:0483a14_2": "果然見得明星現。",
    "X65n1295_002:0483a15_3": "未到門庭冷似灰。",
    "X65n1295_002:0483a15_4": "(介石朋)。",
    "X65n1295_002:0483a16_0": "雪嶺六年修苦行。",
    "X65n1295_002:0483a16_1": "今朝打失主人公。",
    "X65n1295_002:0483a16_2": "普天帀地無尋處。",
    "X65n1295_002:0483a17_3": "百億分身是脫空。",
    "X65n1295_002:0483a17_4": "(天目禮)。",
    "X65n1295_002:0483a18_0": "正覺山前失眼睛。",
    "X65n1295_002:0483a18_1": "是凡是聖盡生盲。",
    "X65n1295_002:0483a18_2": "至今夜夜明星現。",
    "X65n1295_002:0483a19_3": "誰肯向伊行處行。",
    "X65n1295_002:0483a19_4": "(癡絕冲)。",
    "X65n1295_002:0483a20_0": "明星見處月三更。",
    "X65n1295_002:0483a20_1": "箇箇眉毛眼上橫。",
    "X65n1295_002:0483a20_2": "平地起堆黃面老。",
    "X65n1295_002:0483a21_3": "夢中說夢可憐生。",
    "X65n1295_002:0483a21_4": "(大歇謙)。",
    "X65n1295_002:0483a22_0": "明星一見眼皮穿。",
    "X65n1295_002:0483a22_1": "漢語胡言萬萬千。",
    "X65n1295_002:0483a22_2": "暴富乞兒休說夢。",
    "X65n1295_002:0483a23_3": "誰家竈裡火無煙。",
    "X65n1295_002:0483a23_4": "(無量壽)。",
    "X65n1295_002:0483a24_0": "金鍾夜擊九重城。",
    "X65n1295_002:0483a24_1": "六載歸來改瘦形。",
    "X65n1295_002:0483a24_2": "待得眾生心眼活。",
    "X65n1295_002:0483b01_3": "雪山依舊碧崚層。",
    "X65n1295_002:0483b01_4": "(虗堂愚)。",
    "X65n1295_002:0483b02_0": "輕金輪位重草座。",
    "X65n1295_002:0483b02_1": "金彈換人泥彈丸。",
    "X65n1295_002:0483b02_2": "末世眾生心眼巧。",
    "X65n1295_002:0483b03_3": "明星空照雪山寒。",
    "X65n1295_002:0483b03_4": "(閑極雲)。",
    "X65n1295_002:0483b04_0": "月滿長空星滿天。",
    "X65n1295_002:0483b04_1": "瞿曇一見眼皮穿。",
    "X65n1295_002:0483b04_2": "長安市上人無數。",
    "X65n1295_002:0483b05_3": "何似家家夜莫眠。",
    "X65n1295_002:0483b05_4": "(千峯琬)。",
    "X65n1295_002:0483b06_0": "世尊一日陞座。",
    "X65n1295_002:0483b06_1": "大眾纔集定。",
    "X65n1295_002:0483b06_2": "文殊白槌云。",
    "X65n1295_002:0483b06_3": "諦觀法王法。",
    "X65n1295_002:0483b07_4": "法王法如是。",
    "X65n1295_002:0483b07_5": "世尊便下座。",
    "X65n1295_002:0483b07_6": "　頌曰。",
    "X65n1295_002:0483b08_0": "聲振大千龍虎伏。",
    "X65n1295_002:0483b08_1": "無人解和法王才。",
    "X65n1295_002:0483b08_2": "言下便明猶是鈍。",
    "X65n1295_002:0483b09_3": "頓教千眼一時開。",
    "X65n1295_002:0483b09_4": "(明招謙)。",
    "X65n1295_002:0483b10_0": "文殊白槌報眾知。",
    "X65n1295_002:0483b10_1": "法王法令合如斯。",
    "X65n1295_002:0483b10_2": "會中若有仙陁客。",
    "X65n1295_002:0483b11_3": "不待眉間毫相輝。",
    "X65n1295_002:0483b11_4": "(北塔祚)。",
    "X65n1295_002:0483b12_0": "列聖藂中作者知。",
    "X65n1295_002:0483b12_1": "法王法令不如斯。",
    "X65n1295_002:0483b12_2": "會中若有仙陀客。",
    "X65n1295_002:0483b13_3": "何必文殊下一槌。",
    "X65n1295_002:0483b13_4": "(雪竇顯)。",
    "X65n1295_002:0483b14_0": "百萬靈山似葦麻。",
    "X65n1295_002:0483b14_1": "風行雲集已周遮。",
    "X65n1295_002:0483b14_2": "當時不是文殊老。",
    "X65n1295_002:0483b15_3": "往往瞿曇更撒沙。",
    "X65n1295_002:0483b15_4": "(佛印元)。",
    "X65n1295_002:0483b16_0": "頭角麟龍眾若干。",
    "X65n1295_002:0483b16_1": "當時一例受欺謾。",
    "X65n1295_002:0483b16_2": "法王真子揮楗椎。",
    "X65n1295_002:0483b17_3": "直至而今作笑端。",
    "X65n1295_002:0483b17_4": "(正覺逸)。",
    "X65n1295_002:0483b18_0": "未兆之前早二三。",
    "X65n1295_002:0483b18_1": "白槌之後更那堪。",
    "X65n1295_002:0483b18_2": "當時若有仙陀客。",
    "X65n1295_002:0483b19_3": "不到如今強指南。",
    "X65n1295_002:0483b19_4": "(海印信)。",
    "X65n1295_002:0483b20_0": "七佛之師下一槌。",
    "X65n1295_002:0483b20_1": "鵞王成鴨鱉成龜。",
    "X65n1295_002:0483b20_2": "滿筵龍象齊傾耳。",
    "X65n1295_002:0483b21_3": "咲殺靈山老古錐。",
    "X65n1295_002:0483b21_4": "(野軒遵)。",
    "X65n1295_002:0483b22_0": "巍巍頂相終難見。",
    "X65n1295_002:0483b22_1": "舒卷何當如掣電。",
    "X65n1295_002:0483b22_2": "彼時若有此時人。",
    "X65n1295_002:0483b23_3": "文殊槌下分鍼線。",
    "X65n1295_002:0483b23_4": "(白雲端)。",
    "X65n1295_002:0483b24_0": "諦觀法王法。",
    "X65n1295_002:0483b24_1": "法王法如是。",
    "X65n1295_002:0483b24_2": "玉輪影射珊瑚枝。",
    "X65n1295_002:0483b24_3": "一陣清風動天地。",
    "X65n1295_002:0483c01_4": "(地藏恩)。",
    "X65n1295_002:0483c02_0": "月在波心徹底寒。",
    "X65n1295_002:0483c02_1": "澄澄應不許龍蟠。",
    "X65n1295_002:0483c02_2": "五湖多少未歸客。",
    "X65n1295_002:0483c03_3": "却被傍人把釣竿。",
    "X65n1295_002:0483c03_4": "(上方益)。",
    "X65n1295_002:0483c04_0": "彌盧出海橫天外。",
    "X65n1295_002:0483c04_1": "南北東西不見邊。",
    "X65n1295_002:0483c04_2": "一幅素縑描不得。",
    "X65n1295_002:0483c05_3": "競將天下與人傳。",
    "X65n1295_002:0483c05_4": "(大洪遂)。",
    "X65n1295_002:0483c06_0": "據坐凝眸語未形。",
    "X65n1295_002:0483c06_1": "一槌直下意何明。",
    "X65n1295_002:0483c06_2": "倒行此令如相委。",
    "X65n1295_002:0483c07_3": "無限清風動地生。",
    "X65n1295_002:0483c07_4": "(夢菴信)。",
    "X65n1295_002:0483c08_0": "一段真風見也麼。",
    "X65n1295_002:0483c08_1": "元元化母理機梭。",
    "X65n1295_002:0483c08_2": "織成古錦含春象。",
    "X65n1295_002:0483c09_3": "無奈東君漏泄何。",
    "X65n1295_002:0483c09_4": "(天童覺)。",
    "X65n1295_002:0483c10_0": "一輪明月映天心。",
    "X65n1295_002:0483c10_1": "四海生靈荷照臨。",
    "X65n1295_002:0483c10_2": "何必西風撼丹桂。",
    "X65n1295_002:0483c11_3": "碧霄重送九秋音。",
    "X65n1295_002:0483c11_4": "(佛鑑懃)。",
    "X65n1295_002:0483c12_0": "法王法令若為酬。",
    "X65n1295_002:0483c12_1": "老倒文殊強出頭。",
    "X65n1295_002:0483c12_2": "負累釋迦猶可事。",
    "X65n1295_002:0483c13_3": "至今千古閙啾啾。",
    "X65n1295_002:0483c13_4": "(龍門遠)。",
    "X65n1295_002:0483c14_0": "銀蟾皎潔豈容模。",
    "X65n1295_002:0483c14_1": "剛被文殊強塗糊。",
    "X65n1295_002:0483c14_2": "千古兒孫無覓處。",
    "X65n1295_002:0483c15_3": "三條椽下觜盧都。",
    "X65n1295_002:0483c15_4": "(月菴果)。",
    "X65n1295_002:0483c16_0": "金槌影動。",
    "X65n1295_002:0483c16_1": "寶劒光寒。",
    "X65n1295_002:0483c16_2": "百萬之眾。",
    "X65n1295_002:0483c16_3": "齊著眼看。",
    "X65n1295_002:0483c16_4": "(楚安方)。",
    "X65n1295_002:0483c17_0": "瞿曇按指。",
    "X65n1295_002:0483c17_1": "文殊據令。",
    "X65n1295_002:0483c17_2": "漏泄天機。",
    "X65n1295_002:0483c17_3": "一槌打正。",
    "X65n1295_002:0483c17_4": "(南華昺)。",
    "X65n1295_002:0483c18_0": "【續收】正令付全提。",
    "X65n1295_002:0483c18_1": "不存凡聖機。",
    "X65n1295_002:0483c18_2": "牢關百雜碎。",
    "X65n1295_002:0483c18_3": "石火電光輝。",
    "X65n1295_002:0483c19_4": "(尼無著總)。",
    "X65n1295_002:0483c20_0": "古皇前化超羣檄。",
    "X65n1295_002:0483c20_1": "無字印文明劃劃。",
    "X65n1295_002:0483c20_2": "今時衲子若當陽。",
    "X65n1295_002:0483c21_3": "往往半千成五百。",
    "X65n1295_002:0483c21_4": "(正堂辯)。",
    "X65n1295_002:0483c22_0": "法王法令沒周遮。",
    "X65n1295_002:0483c22_1": "一片虗凝絕點瑕。",
    "X65n1295_002:0483c22_2": "槌下不開諸聖眼。",
    "X65n1295_002:0483c23_3": "幾多騏驥困鹽車。",
    "X65n1295_002:0483c23_4": "(靈巖安)。",
    "X65n1295_002:0483c24_0": "見成活計莫周遮。",
    "X65n1295_002:0483c24_1": "椎下分疎事轉差。",
    "X65n1295_002:0483c24_2": "若是咬人師子子。",
    "X65n1295_002:0484a01_3": "何須牙上更安牙。",
    "X65n1295_002:0484a01_4": "(月林觀)。",
    "X65n1295_002:0484a02_0": "道泰時清才子貴。",
    "X65n1295_002:0484a02_1": "家肥國富小兒嬌。",
    "X65n1295_002:0484a02_2": "不因紫陌花開早。",
    "X65n1295_002:0484a03_3": "爭見黃鶯下柳條。",
    "X65n1295_002:0484a03_4": "(木菴永)。",
    "X65n1295_002:0484a04_0": "世尊因五通仙人問云。",
    "X65n1295_002:0484a04_1": "佛有六通。",
    "X65n1295_002:0484a04_2": "我有五通。",
    "X65n1295_002:0484a04_3": "如何是那一通。",
    "X65n1295_002:0484a05_4": "世尊召仙人。",
    "X65n1295_002:0484a05_5": "仙人應諾。",
    "X65n1295_002:0484a05_6": "世尊曰。",
    "X65n1295_002:0484a05_7": "那一通爾問我。",
    "X65n1295_002:0484a06_8": "　頌曰。",
    "X65n1295_002:0484a07_0": "仙人一問通皆備。",
    "X65n1295_002:0484a07_1": "却是瞿曇一物無。",
    "X65n1295_002:0484a07_2": "喚得兔來依舊放。",
    "X65n1295_002:0484a08_3": "幾多山鬼暗相呼。",
    "X65n1295_002:0484a08_4": "(佛印元)。",
    "X65n1295_002:0484a09_0": "那一通爾問我。",
    "X65n1295_002:0484a09_1": "令人慚愧釋迦老。",
    "X65n1295_002:0484a09_2": "只知步步踏紅蓮。",
    "X65n1295_002:0484a10_0": "不覺茫茫入荒草。",
    "X65n1295_002:0484a10_1": "(正覺逸)。",
    "X65n1295_002:0484a11_0": "無量劫來曾未遇。",
    "X65n1295_002:0484a11_1": "如何不動到其中。",
    "X65n1295_002:0484a11_2": "莫言佛法無多子。",
    "X65n1295_002:0484a12_3": "最苦瞿曇那一通。",
    "X65n1295_002:0484a12_4": "(保寧勇)。",
    "X65n1295_002:0484a13_0": "問佛如何那一通。",
    "X65n1295_002:0484a13_1": "世尊當面指迷蹤。",
    "X65n1295_002:0484a13_2": "祥雲密密微微雨。",
    "X65n1295_002:0484a14_3": "大震雷音帀地風。",
    "X65n1295_002:0484a14_4": "(雲溪恭)。",
    "X65n1295_002:0484a15_0": "汝問如何此問親。",
    "X65n1295_002:0484a15_1": "嶺梅江柳共芳春。",
    "X65n1295_002:0484a15_2": "抱贓不用行搜檢。",
    "X65n1295_002:0484a16_3": "已自當堂露賊身。",
    "X65n1295_002:0484a16_4": "(長靈卓)。",
    "X65n1295_002:0484a17_0": "【續收】那一通你問我。",
    "X65n1295_002:0484a17_1": "玄關倒插無鬚鎻。",
    "X65n1295_002:0484a17_2": "等閑一掣掣得開。",
    "X65n1295_002:0484a18_3": "三個老婆相對坐(咄)。",
    "X65n1295_002:0484a18_4": "(斷橋倫)。",
    "X65n1295_002:0484a19_0": "那一通。",
    "X65n1295_002:0484a19_1": "你問我。",
    "X65n1295_002:0484a19_2": "口是禍門。",
    "X65n1295_002:0484a19_3": "招因帶果。",
    "X65n1295_002:0484a19_4": "慚愧慈悲大法王。",
    "X65n1295_002:0484a20_5": "丙乙离壬不屬火。",
    "X65n1295_002:0484a20_6": "(寶葉源)。",
    "X65n1295_002:0484a21_0": "世尊因外道問云。",
    "X65n1295_002:0484a21_1": "不問有言不問無言。",
    "X65n1295_002:0484a21_2": "世尊據坐。",
    "X65n1295_002:0484a22_3": "外道讚曰。",
    "X65n1295_002:0484a22_4": "世尊大慈大悲。",
    "X65n1295_002:0484a22_5": "開我迷雲令我得入。",
    "X65n1295_002:0484a23_6": "作禮而去。",
    "X65n1295_002:0484a23_7": "後阿難問佛。",
    "X65n1295_002:0484a23_8": "外道有何所證。",
    "X65n1295_002:0484a23_9": "而言得入。",
    "X65n1295_002:0484a24_10": "世尊曰。",
    "X65n1295_002:0484a24_11": "如世良馬見鞭影而行。",
    "X65n1295_002:0484a24_12": "　頌曰。",
    "X65n1295_002:0484b01_0": "鞭影分明指似君。",
    "X65n1295_002:0484b01_1": "多聞瞥地爽精神。",
    "X65n1295_002:0484b01_2": "汾陽報汝諸禪侶。",
    "X65n1295_002:0484b02_3": "信手拈來莫厭塵。",
    "X65n1295_002:0484b02_4": "(汾陽昭)。",
    "X65n1295_002:0484b03_0": "機輪曾未轉。",
    "X65n1295_002:0484b03_1": "轉必兩頭走。",
    "X65n1295_002:0484b03_2": "明鏡忽臨臺。",
    "X65n1295_002:0484b03_3": "當下知妍醜。",
    "X65n1295_002:0484b04_0": "妍醜分兮迷雲開。",
    "X65n1295_002:0484b04_1": "慈門何處生塵埃。",
    "X65n1295_002:0484b04_2": "因思良馬窺鞭影。",
    "X65n1295_002:0484b05_3": "千里追風喚得回。",
    "X65n1295_002:0484b05_4": "(雪竇顯)。",
    "X65n1295_002:0484b06_0": "雙鋒覆護兩俱摧。",
    "X65n1295_002:0484b06_1": "迷雲從此豁然開。",
    "X65n1295_002:0484b06_2": "收得劫初鈴子後。",
    "X65n1295_002:0484b07_3": "輕輕一振動雲雷。",
    "X65n1295_002:0484b07_4": "(天衣懷)。",
    "X65n1295_002:0484b08_0": "萬丈寒潭徹底清。",
    "X65n1295_002:0484b08_1": "錦鱗夜靜向光行。",
    "X65n1295_002:0484b08_2": "和竿一掣隨鈎上。",
    "X65n1295_002:0484b09_3": "水面茫茫散月明。",
    "X65n1295_002:0484b09_4": "(白雲端)。",
    "X65n1295_002:0484b10_0": "經過遇夜宿荒草。",
    "X65n1295_002:0484b10_1": "開得眼來天大曉。",
    "X65n1295_002:0484b10_2": "空心赤脚唱歌歸。",
    "X65n1295_002:0484b11_3": "路上行人已不少。",
    "X65n1295_002:0484b11_4": "(保寧勇)。",
    "X65n1295_002:0484b12_0": "特地殷勤問有無。",
    "X65n1295_002:0484b12_1": "因風應不費工夫。",
    "X65n1295_002:0484b12_2": "迷雲縱得開令入。",
    "X65n1295_002:0484b13_3": "未免區區在半途。",
    "X65n1295_002:0484b13_4": "(淨照臻)。",
    "X65n1295_002:0484b14_0": "雪覆喬林同一色。",
    "X65n1295_002:0484b14_1": "清光上下含虗碧。",
    "X65n1295_002:0484b14_2": "採樵人立渡頭寒。",
    "X65n1295_002:0484b15_3": "極目圓蟾為誰白。",
    "X65n1295_002:0484b15_4": "(成枯木)。",
    "X65n1295_002:0484b16_0": "外道麤心慣險夷。",
    "X65n1295_002:0484b16_1": "老胡鞭影露鍼錐。",
    "X65n1295_002:0484b16_2": "行人拾得東門兔。",
    "X65n1295_002:0484b17_3": "誰管韓獹精力疲。",
    "X65n1295_002:0484b17_4": "(長靈卓)。",
    "X65n1295_002:0484b18_0": "世尊恰似青銅鏡。",
    "X65n1295_002:0484b18_1": "掛向虗空秋月靜。",
    "X65n1295_002:0484b18_2": "表裏無私照膽寒。",
    "X65n1295_002:0484b19_3": "高低一一皆相映。",
    "X65n1295_002:0484b19_4": "(佛鑑懃)。",
    "X65n1295_002:0484b20_0": "杲日連天照有無。",
    "X65n1295_002:0484b20_1": "孰云善逝坐跏趺。",
    "X65n1295_002:0484b20_2": "如今要見當年事。",
    "X65n1295_002:0484b21_3": "邪正由來在半途。",
    "X65n1295_002:0484b21_4": "(龍門遠)。",
    "X65n1295_002:0484b22_0": "有無不問語先墯。",
    "X65n1295_002:0484b22_1": "明鏡當臺雙照破。",
    "X65n1295_002:0484b22_2": "迷雲散盡曉天空。",
    "X65n1295_002:0484b23_3": "杲日團團紅似火。",
    "X65n1295_002:0484b23_4": "(佛性泰)。",
    "X65n1295_002:0484b24_0": "露影藏身問世尊。",
    "X65n1295_002:0484b24_1": "瞿曇一點不加文。",
    "X65n1295_002:0484b24_2": "迷雲舒卷從斯入。",
    "X65n1295_002:0484c01_3": "十倍精神減八分。",
    "X65n1295_002:0484c01_4": "(佛燈珣)。",
    "X65n1295_002:0484c02_0": "迷悟躅髏前。",
    "X65n1295_002:0484c02_1": "何勞更舉鞭。",
    "X65n1295_002:0484c02_2": "只持雞狗戒。",
    "X65n1295_002:0484c02_3": "不學祖師禪。",
    "X65n1295_002:0484c03_0": "(鼓山珪)。",
    "X65n1295_002:0484c04_0": "兩處牢關擊不通。",
    "X65n1295_002:0484c04_1": "纖塵不動自乖宗。",
    "X65n1295_002:0484c04_2": "忽然業鏡百雜碎。",
    "X65n1295_002:0484c05_3": "黃面瞿曇失却蹤。",
    "X65n1295_002:0484c05_4": "(徑山杲)。",
    "X65n1295_002:0484c06_0": "【續收】外道殷勤來問佛。",
    "X65n1295_002:0484c06_1": "有言不問及無言。",
    "X65n1295_002:0484c06_2": "大雄不費纖毫力。",
    "X65n1295_002:0484c07_3": "良馬何曾用舉鞭。",
    "X65n1295_002:0484c07_4": "(照堂一)。",
    "X65n1295_002:0484c08_0": "世尊隻眼通三界。",
    "X65n1295_002:0484c08_1": "外道雙眸貫五天。",
    "X65n1295_002:0484c08_2": "華意正濃桃臉笑。",
    "X65n1295_002:0484c09_3": "春光不在柳梢邊。",
    "X65n1295_002:0484c09_4": "(雪巢一)。",
    "X65n1295_002:0484c10_0": "不問有言無言。",
    "X65n1295_002:0484c10_1": "說甚見影見鞭。",
    "X65n1295_002:0484c10_2": "露柱口掛壁上。",
    "X65n1295_002:0484c10_3": "燈籠倒退三千。",
    "X65n1295_002:0484c11_4": "(瞎堂遠)。",
    "X65n1295_002:0484c12_0": "陷虎機關兩處安。",
    "X65n1295_002:0484c12_1": "湍流一截萬源乾。",
    "X65n1295_002:0484c12_2": "駿駒瞥爾窺鞭影。",
    "X65n1295_002:0484c13_3": "凜凜霜蹄毛骨寒。",
    "X65n1295_002:0484c13_4": "(尼無著總)。",
    "X65n1295_002:0484c14_0": "獵涉榮枯未是奇。",
    "X65n1295_002:0484c14_1": "到頭誰是出家兒。",
    "X65n1295_002:0484c14_2": "故鄉漠漠無消息。",
    "X65n1295_002:0484c15_3": "時有孤雲嶺外歸。",
    "X65n1295_002:0484c15_4": "(正堂辯)。",
    "X65n1295_002:0484c16_0": "赤日輝空照大千。",
    "X65n1295_002:0484c16_1": "佛魔俱盡頭超然。",
    "X65n1295_002:0484c16_2": "悠悠莫論途中事。",
    "X65n1295_002:0484c17_3": "露出胷襟子細看。",
    "X65n1295_002:0484c17_4": "(大溈智)。",
    "X65n1295_002:0484c18_0": "不問有無先話墯。",
    "X65n1295_002:0484c18_1": "軒轅古鏡忽臨臺。",
    "X65n1295_002:0484c18_2": "雖然當下分妍醜。",
    "X65n1295_002:0484c19_3": "依舊迷雲撥不開。",
    "X65n1295_002:0484c19_4": "(肯堂充)。",
    "X65n1295_002:0484c20_0": "自把碌磚空裏擲。",
    "X65n1295_002:0484c20_1": "必端自打自家頭。",
    "X65n1295_002:0484c20_2": "灼然自痛自難說。",
    "X65n1295_002:0484c21_3": "自著摩挲歸去休。",
    "X65n1295_002:0484c21_4": "(斷橋倫)。",
    "X65n1295_002:0484c22_0": "不問無言及有言。",
    "X65n1295_002:0484c22_1": "坐觀成敗自安然。",
    "X65n1295_002:0484c22_2": "仙陀瞥爾知宗墮。",
    "X65n1295_002:0484c23_3": "誰謂世尊曾舉鞭。",
    "X65n1295_002:0484c23_4": "(本覺一)。",
    "X65n1295_002:0484c24_0": "【增收】世尊因外道問。",
    "X65n1295_002:0484c24_1": "昨日說何法。",
    "X65n1295_002:0484c24_2": "曰說定法。",
    "X65n1295_002:0484c24_3": "又問。",
    "X65n1295_002:0484c24_4": "今日說何法。",
    "X65n1295_002:0485a01_5": "曰說不定法(云云)。",
    "X65n1295_002:0485a01_6": "　頌曰。",
    "X65n1295_002:0485a02_0": "古鑑從來絕點痕。",
    "X65n1295_002:0485a02_1": "隨其妍醜目前分。",
    "X65n1295_002:0485a02_2": "而今鑑破無光影。",
    "X65n1295_002:0485a03_3": "風輥長江水色渾。",
    "X65n1295_002:0485a03_4": "(塗毒策)。",
    "X65n1295_002:0485a04_0": "昨日與今日。",
    "X65n1295_002:0485a04_1": "說定說不定。",
    "X65n1295_002:0485a04_2": "寰中天子敕。",
    "X65n1295_002:0485a04_3": "塞外將軍令。",
    "X65n1295_002:0485a05_0": "外道當年入夢鄉。",
    "X65n1295_002:0485a05_1": "直至如今猶未省。",
    "X65n1295_002:0485a05_2": "(高安悟)。",
    "X65n1295_002:0485a06_0": "昨日定今日不定。",
    "X65n1295_002:0485a06_1": "正令已行皆逐正。",
    "X65n1295_002:0485a06_2": "卓下靈山皁纛旗。",
    "X65n1295_002:0485a07_3": "百萬麾軍皆乞命。",
    "X65n1295_002:0485a07_4": "(山堂淳)。",
    "X65n1295_002:0485a08_0": "【增收】世尊因調達謗佛。",
    "X65n1295_002:0485a08_1": "生身陷地獄。",
    "X65n1295_002:0485a08_2": "佛敕阿難傳問云。",
    "X65n1295_002:0485a09_3": "汝在地獄中安否。",
    "X65n1295_002:0485a09_4": "云我雖在地獄。",
    "X65n1295_002:0485a09_5": "如三禪天樂。",
    "X65n1295_002:0485a10_6": "佛又令阿難傳問。",
    "X65n1295_002:0485a10_7": "你還求出不。",
    "X65n1295_002:0485a10_8": "云我待世尊來便出。",
    "X65n1295_002:0485a11_9": "阿難云。",
    "X65n1295_002:0485a11_10": "佛是三界大師。",
    "X65n1295_002:0485a11_11": "豈有入地獄分。",
    "X65n1295_002:0485a12_0": "云佛既無入地獄分。",
    "X65n1295_002:0485a12_1": "我豈有出地獄分。",
    "X65n1295_002:0485a12_2": "　頌曰。",
    "X65n1295_002:0485a13_0": "好笑提婆達多。",
    "X65n1295_002:0485a13_1": "入捺落十小劫波。",
    "X65n1295_002:0485a13_2": "然得三禪妙樂。",
    "X65n1295_002:0485a13_3": "吹布毛須還鳥窠。",
    "X65n1295_002:0485a14_4": "(湛堂準)。",
    "X65n1295_002:0485a15_0": "大隱居廛。",
    "X65n1295_002:0485a15_1": "小隱居山。",
    "X65n1295_002:0485a15_2": "各得其所。",
    "X65n1295_002:0485a15_3": "隨分安閑。",
    "X65n1295_002:0485a15_4": "何必更來論出入。",
    "X65n1295_002:0485a16_5": "人生在處有餘歡。",
    "X65n1295_002:0485a16_6": "(別峯雲)。",
    "X65n1295_002:0485a17_0": "地獄天堂八字打開。",
    "X65n1295_002:0485a17_1": "誰知無去亦無來。",
    "X65n1295_002:0485a17_2": "若言已得三禪樂。",
    "X65n1295_002:0485a18_3": "未免將身自活埋。",
    "X65n1295_002:0485a18_4": "(松源岳)。",
    "X65n1295_002:0485a19_0": "萬仞崖頭[拚ㄙ+ㄊ]得去。",
    "X65n1295_002:0485a19_1": "不知何處覓全屍。",
    "X65n1295_002:0485a19_2": "業風吹起再甦省。",
    "X65n1295_002:0485a20_3": "却問如今是甚時。",
    "X65n1295_002:0485a20_4": "(虗堂愚)。",
    "X65n1295_002:0485a21_0": "【增收】世尊因長爪梵志索論義。",
    "X65n1295_002:0485a21_1": "預約云。",
    "X65n1295_002:0485a21_2": "我義若墯。",
    "X65n1295_002:0485a21_3": "我自斬首以謝。",
    "X65n1295_002:0485a22_4": "世尊云。",
    "X65n1295_002:0485a22_5": "汝義以何為宗。",
    "X65n1295_002:0485a22_6": "梵志云。",
    "X65n1295_002:0485a22_7": "我義以一切不受為宗。",
    "X65n1295_002:0485a23_8": "世尊云。",
    "X65n1295_002:0485a23_9": "是見受不。",
    "X65n1295_002:0485a23_10": "志拂袖而去。",
    "X65n1295_002:0485a24_11": "行至中路有省。",
    "X65n1295_002:0485a24_12": "乃謂弟子云。",
    "X65n1295_002:0485a24_13": "吾當回去。",
    "X65n1295_002:0485a24_14": "斬首以謝世尊。",
    "X65n1295_002:0485b01_15": "弟子云。",
    "X65n1295_002:0485b01_16": "人天眾前幸當得勝。",
    "X65n1295_002:0485b01_17": "何以斬首。",
    "X65n1295_002:0485b02_18": "志云。",
    "X65n1295_002:0485b02_19": "我寧於有智人前斬首。",
    "X65n1295_002:0485b02_20": "不於無智人前得勝。",
    "X65n1295_002:0485b03_21": "乃歎云。",
    "X65n1295_002:0485b03_22": "我義兩處負墯。",
    "X65n1295_002:0485b03_23": "是見若受負門處麤。",
    "X65n1295_002:0485b04_24": "是見不受負門處細。",
    "X65n1295_002:0485b04_25": "一切人天二乘皆不知我義墯處。",
    "X65n1295_002:0485b05_26": "唯有世尊諸大菩薩知我義墯。",
    "X65n1295_002:0485b05_27": "回至世尊前云。",
    "X65n1295_002:0485b06_28": "我義兩處負墯。",
    "X65n1295_002:0485b06_29": "故當斬首以謝。",
    "X65n1295_002:0485b06_30": "世尊云。",
    "X65n1295_002:0485b07_31": "我法中無如是事。",
    "X65n1295_002:0485b07_32": "汝當回心向道。",
    "X65n1295_002:0485b07_33": "於是同五百徒眾。",
    "X65n1295_002:0485b08_34": "一時投佛出家證阿羅漢。",
    "X65n1295_002:0485b08_35": "　頌曰。",
    "X65n1295_002:0485b09_0": "是見若受破家門。",
    "X65n1295_002:0485b09_1": "是見不受與誰論。",
    "X65n1295_002:0485b09_2": "匾檐驀折兩頭脫。",
    "X65n1295_002:0485b10_3": "一毫頭上現乾坤。",
    "X65n1295_002:0485b10_4": "(天衣懷)。",
    "X65n1295_002:0485b11_0": "一切不受逞家風。",
    "X65n1295_002:0485b11_1": "片言雙破兩頭攻。",
    "X65n1295_002:0485b11_2": "赤旛奪了回光處。",
    "X65n1295_002:0485b12_3": "始信言前墮己宗。",
    "X65n1295_002:0485b12_4": "(本覺一)。",
    "X65n1295_002:0485b13_0": "是見受時眼著屑。",
    "X65n1295_002:0485b13_1": "見如不受事猶乖。",
    "X65n1295_002:0485b13_2": "賊身已露徒回首。",
    "X65n1295_002:0485b14_3": "鬼面神頭一處埋。",
    "X65n1295_002:0485b14_4": "(無用全)。",
    "X65n1295_002:0485b15_0": "【增收】世尊因乾闥婆王奏樂。",
    "X65n1295_002:0485b15_1": "其時山河大地盡作琴聲。",
    "X65n1295_002:0485b16_2": "迦葉起舞。",
    "X65n1295_002:0485b16_3": "王問。",
    "X65n1295_002:0485b16_4": "迦葉豈不是阿羅漢。",
    "X65n1295_002:0485b16_5": "諸漏已盡。",
    "X65n1295_002:0485b17_6": "何更有餘習。",
    "X65n1295_002:0485b17_7": "世尊曰。",
    "X65n1295_002:0485b17_8": "實無餘習。",
    "X65n1295_002:0485b17_9": "莫謗法也。",
    "X65n1295_002:0485b17_10": "王又撫琴三徧。",
    "X65n1295_002:0485b18_11": "迦葉亦三度作舞。",
    "X65n1295_002:0485b18_12": "王曰。",
    "X65n1295_002:0485b18_13": "迦葉作舞。",
    "X65n1295_002:0485b19_0": "豈不是。",
    "X65n1295_002:0485b19_1": "世尊曰。",
    "X65n1295_002:0485b19_2": "實不曾作舞。",
    "X65n1295_002:0485b19_3": "王曰。",
    "X65n1295_002:0485b19_4": "世尊何得妄語。",
    "X65n1295_002:0485b20_5": "世尊曰。",
    "X65n1295_002:0485b20_6": "不妄語。",
    "X65n1295_002:0485b20_7": "汝撫琴山河大地草木盡作琴聲。",
    "X65n1295_002:0485b21_8": "豈不是。",
    "X65n1295_002:0485b21_9": "王曰是。",
    "X65n1295_002:0485b21_10": "世尊曰。",
    "X65n1295_002:0485b21_11": "迦葉亦復如是。",
    "X65n1295_002:0485b21_12": "實不曾作舞。",
    "X65n1295_002:0485b22_13": "王乃信受　修山主問澄源禪師。",
    "X65n1295_002:0485b22_14": "乾闥婆王奏樂。",
    "X65n1295_002:0485b23_15": "直得須彌岌峇海水騰波。",
    "X65n1295_002:0485b23_16": "迦葉作舞作麼生會。",
    "X65n1295_002:0485b24_17": "源曰。",
    "X65n1295_002:0485b24_18": "迦葉過去世曾作樂人來。",
    "X65n1295_002:0485b24_19": "習氣未除。",
    "X65n1295_002:0485c01_20": "修曰。",
    "X65n1295_002:0485c01_21": "須彌岌峇海水騰波又作麼生。",
    "X65n1295_002:0485c01_22": "源休去　法眼代曰。",
    "X65n1295_002:0485c02_23": "正是習氣。",
    "X65n1295_002:0485c02_24": "　頌曰。",
    "X65n1295_002:0485c03_0": "輕輕撥轉一條絃。",
    "X65n1295_002:0485c03_1": "聲振三千與大千。",
    "X65n1295_002:0485c03_2": "賴得飲光知密意。",
    "X65n1295_002:0485c04_3": "肯將羅袖惹春煙。",
    "X65n1295_002:0485c04_4": "(塗毒策)。",
    "X65n1295_002:0485c05_0": "有三尺劒。",
    "X65n1295_002:0485c05_1": "可以謁趙國。",
    "X65n1295_002:0485c05_2": "無千里眼。",
    "X65n1295_002:0485c05_3": "難以見懸絲。",
    "X65n1295_002:0485c05_4": "巍巍堂堂。",
    "X65n1295_002:0485c06_5": "三界大師。",
    "X65n1295_002:0485c06_6": "(虗堂愚)。",
    "X65n1295_002:0485c07_0": "【增收】世尊在忉利天為母說法。",
    "X65n1295_002:0485c07_1": "優瑱王思佛。",
    "X65n1295_002:0485c07_2": "命匠雕旃檀像。",
    "X65n1295_002:0485c08_3": "及至世尊下來。",
    "X65n1295_002:0485c08_4": "像亦出迎。",
    "X65n1295_002:0485c08_5": "　頌曰。",
    "X65n1295_002:0485c09_0": "紫金光聚照山河。",
    "X65n1295_002:0485c09_1": "天上人間意氣多。",
    "X65n1295_002:0485c09_2": "曾敕文殊領徒眾。",
    "X65n1295_002:0485c10_3": "毗耶城裏問維摩。",
    "X65n1295_002:0485c10_4": "(虗堂愚)。",
    "X65n1295_002:0485c11_0": "【增收】世尊一日坐次。",
    "X65n1295_002:0485c11_1": "見二人舁豬子過。",
    "X65n1295_002:0485c11_2": "乃問這箇是甚麼。",
    "X65n1295_002:0485c12_3": "其人云。",
    "X65n1295_002:0485c12_4": "世尊具一切智。",
    "X65n1295_002:0485c12_5": "豬子也不識。",
    "X65n1295_002:0485c12_6": "世尊曰。",
    "X65n1295_002:0485c13_7": "也要問過。",
    "X65n1295_002:0485c13_8": "　頌曰。",
    "X65n1295_002:0485c14_0": "捨筏懷兼濟。",
    "X65n1295_002:0485c14_1": "逢畊更問津。",
    "X65n1295_002:0485c14_2": "却將未歸意。",
    "X65n1295_002:0485c14_3": "說與欲行人。",
    "X65n1295_002:0485c15_0": "(木庵瓊首座)。",
    "X65n1295_002:0485c16_0": "【增收】世尊三喚三應乃云。",
    "X65n1295_002:0485c16_1": "無為真佛實在我身　大溈智云。",
    "X65n1295_002:0485c17_2": "世尊為誰家分上事。",
    "X65n1295_002:0485c17_3": "又喝云。",
    "X65n1295_002:0485c17_4": "汝等切忌認著昭昭靈靈。",
    "X65n1295_002:0485c18_5": "復頌曰。",
    "X65n1295_002:0485c19_0": "真佛無為在我身。",
    "X65n1295_002:0485c19_1": "三呼三應太惺惺。",
    "X65n1295_002:0485c19_2": "若人不悟元由者。",
    "X65n1295_002:0485c20_3": "塵劫茫茫認識神。",
    "X65n1295_002:0485c21_0": "【增收】世尊一日敕阿難。",
    "X65n1295_002:0485c21_1": "食時將至。",
    "X65n1295_002:0485c21_2": "汝入城持鉢。",
    "X65n1295_002:0485c21_3": "難應諾。",
    "X65n1295_002:0485c22_4": "曰汝既持鉢。",
    "X65n1295_002:0485c22_5": "當依過去七佛儀式。",
    "X65n1295_002:0485c22_6": "難遂問。",
    "X65n1295_002:0485c22_7": "如何是七佛儀式。",
    "X65n1295_002:0485c23_8": "佛召阿難。",
    "X65n1295_002:0485c23_9": "難應諾。",
    "X65n1295_002:0485c23_10": "佛曰。",
    "X65n1295_002:0485c23_11": "持鉢去　密庵云。",
    "X65n1295_002:0485c24_12": "大小世尊。",
    "X65n1295_002:0485c24_13": "被阿難輕輕靠著。",
    "X65n1295_002:0485c24_14": "未免喚鍾作甕。",
    "X65n1295_002:0486a01_15": "　頌曰。",
    "X65n1295_002:0486a02_0": "從前七佛儀式。",
    "X65n1295_002:0486a02_1": "慶喜何曾欠少。",
    "X65n1295_002:0486a02_2": "堪笑黃面瞿曇。",
    "X65n1295_002:0486a02_3": "無端打箇之遶。",
    "X65n1295_002:0486a03_4": "(遯庵演)。",
    "X65n1295_002:0486a04_0": "【增收】世尊因靈山會上有五百比丘。",
    "X65n1295_002:0486a04_1": "得四禪定。",
    "X65n1295_002:0486a04_2": "具五神通。",
    "X65n1295_002:0486a05_3": "未得法忍。",
    "X65n1295_002:0486a05_4": "以宿命智通各各自見。",
    "X65n1295_002:0486a05_5": "過去殺父害母及諸重罪。",
    "X65n1295_002:0486a06_6": "心內懷疑。",
    "X65n1295_002:0486a06_7": "於甚深法不能證入。",
    "X65n1295_002:0486a07_8": "於是文殊承佛神力。",
    "X65n1295_002:0486a07_9": "手握利劒持逼如來。",
    "X65n1295_002:0486a07_10": "世尊謂文殊曰。",
    "X65n1295_002:0486a08_11": "住住。",
    "X65n1295_002:0486a08_12": "不應作逆。",
    "X65n1295_002:0486a08_13": "勿得害吾。",
    "X65n1295_002:0486a08_14": "吾必被害為善被害。",
    "X65n1295_002:0486a09_15": "文殊。",
    "X65n1295_002:0486a09_16": "從本已來無有我人。",
    "X65n1295_002:0486a09_17": "但以內心見有我人。",
    "X65n1295_002:0486a10_18": "內心起時我必被害。",
    "X65n1295_002:0486a10_19": "即名為害。",
    "X65n1295_002:0486a10_20": "於是五百比丘。",
    "X65n1295_002:0486a11_21": "自悟本心如夢如幻。",
    "X65n1295_002:0486a11_22": "於夢幻中無有我人。",
    "X65n1295_002:0486a12_23": "乃至能生所生父母。",
    "X65n1295_002:0486a12_24": "於是五百比丘同聲讚歎曰。",
    "X65n1295_002:0486a13_25": "文殊大智士。",
    "X65n1295_002:0486a13_26": "深達法源底。",
    "X65n1295_002:0486a13_27": "自手握利劒。",
    "X65n1295_002:0486a14_28": "持逼如來身。",
    "X65n1295_002:0486a14_29": "如劒佛亦爾。",
    "X65n1295_002:0486a14_30": "一相無有二。",
    "X65n1295_002:0486a14_31": "無相無所生。",
    "X65n1295_002:0486a15_32": "是中云何殺。",
    "X65n1295_002:0486a15_33": "　頌曰。",
    "X65n1295_002:0486a16_0": "為渠中路惹埃塵。",
    "X65n1295_002:0486a16_1": "致使全機截斷雲。",
    "X65n1295_002:0486a16_2": "佛劒兩忘何處去。",
    "X65n1295_002:0486a17_3": "還家曲調一番新。",
    "X65n1295_002:0486a17_4": "(象田卿)。",
    "X65n1295_002:0486a18_0": "佛祖由來總是冤。",
    "X65n1295_002:0486a18_1": "電機旋處直如弦。",
    "X65n1295_002:0486a18_2": "金毛若解和聲拶。",
    "X65n1295_002:0486a19_3": "月裏麒麟笑揭天。",
    "X65n1295_002:0486a19_4": "(瞎堂遠)。",
    "X65n1295_002:0486a20_0": "文殊當日逼如來。",
    "X65n1295_002:0486a20_1": "五百聲聞眼豁開。",
    "X65n1295_002:0486a20_2": "欲會如來佛亦爾。",
    "X65n1295_002:0486a21_3": "青蛇匣裏吼風雷。",
    "X65n1295_002:0486a21_4": "(本覺一)。",
    "X65n1295_002:0486a22_0": "【增收】世尊敲髑髏問耆婆。",
    "X65n1295_002:0486a22_1": "生何道。",
    "X65n1295_002:0486a22_2": "曰生人道。",
    "X65n1295_002:0486a22_3": "又敲一曰。",
    "X65n1295_002:0486a23_4": "生何道。",
    "X65n1295_002:0486a23_5": "曰生天。",
    "X65n1295_002:0486a23_6": "又敲一。",
    "X65n1295_002:0486a23_7": "耆罔措。",
    "X65n1295_002:0486a23_8": "　頌曰。",
    "X65n1295_002:0486a24_0": "如來一擊少人知。",
    "X65n1295_002:0486a24_1": "直下分明更是誰。",
    "X65n1295_002:0486a24_2": "無限月光隨水去。",
    "X65n1295_002:0486b01_3": "片雲偏向故山歸。",
    "X65n1295_002:0486b01_4": "(塗毒策)。",
    "X65n1295_002:0486b02_0": "老胡一擊許誰知。",
    "X65n1295_002:0486b02_1": "大冶紅罏片雪飛。",
    "X65n1295_002:0486b02_2": "青草塚間留不住。",
    "X65n1295_002:0486b03_3": "白雲還望故山歸。",
    "X65n1295_002:0486b03_4": "(瞎堂遠)。",
    "X65n1295_002:0486b04_0": "【增收】世尊因地布髮掩泥。",
    "X65n1295_002:0486b04_1": "獻華於然燈佛。",
    "X65n1295_002:0486b04_2": "燈見布髮處遂約退眾。",
    "X65n1295_002:0486b05_3": "乃指地云。",
    "X65n1295_002:0486b05_4": "此一方地宜建一梵剎。",
    "X65n1295_002:0486b06_0": "時有賢于長者。",
    "X65n1295_002:0486b06_1": "持標於指處插云。",
    "X65n1295_002:0486b06_2": "建梵剎已竟。",
    "X65n1295_002:0486b07_0": "時諸天散花讚云。",
    "X65n1295_002:0486b07_1": "庶子有大智矣。",
    "X65n1295_002:0486b07_2": "　頌曰。",
    "X65n1295_002:0486b08_0": "百草頭上無邊春。",
    "X65n1295_002:0486b08_1": "信手拈來用得親。",
    "X65n1295_002:0486b08_2": "丈六金身功德聚。",
    "X65n1295_002:0486b09_3": "等閑擺手入紅塵。",
    "X65n1295_002:0486b09_4": "塵中能作主。",
    "X65n1295_002:0486b09_5": "化外自來賓。",
    "X65n1295_002:0486b09_6": "觸處生涯隨分足。",
    "X65n1295_002:0486b10_7": "未嫌伎倆不如人。",
    "X65n1295_002:0486b10_8": "(天童覺)。",
    "X65n1295_002:0486b11_0": "一枝脩竹建精藍。",
    "X65n1295_002:0486b11_1": "風捲蟭螟入海南。",
    "X65n1295_002:0486b11_2": "惡水潑來成第二。",
    "X65n1295_002:0486b12_3": "鈍根蹉過問前三。",
    "X65n1295_002:0486b12_4": "(張無盡)。",
    "X65n1295_002:0486b13_0": "【增收】世尊因廣頟屠兒日殺千羊。",
    "X65n1295_002:0486b13_1": "一日至世尊前。",
    "X65n1295_002:0486b13_2": "颺下屠刀云。",
    "X65n1295_002:0486b14_3": "我是千佛一數。",
    "X65n1295_002:0486b14_4": "世尊云。",
    "X65n1295_002:0486b14_5": "如是如是。",
    "X65n1295_002:0486b15_0": "　頌曰。",
    "X65n1295_002:0486b16_0": "昔日為刀今日佛。",
    "X65n1295_002:0486b16_1": "今朝為佛佛能刀。",
    "X65n1295_002:0486b16_2": "能刀能佛無差別。",
    "X65n1295_002:0486b17_3": "便見眉間白玉毫。",
    "X65n1295_002:0486b17_4": "(圓悟勤)。",
    "X65n1295_002:0486b18_0": "放下屠刀處。",
    "X65n1295_002:0486b18_1": "棒打不回頭。",
    "X65n1295_002:0486b18_2": "雲自帝鄉去。",
    "X65n1295_002:0486b18_3": "水歸江漢流。",
    "X65n1295_002:0486b19_0": "(退菴休)。",
    "X65n1295_002:0486b20_0": "【增收】世尊因波斯匿王問。",
    "X65n1295_002:0486b20_1": "勝義諦中有世俗諦否。",
    "X65n1295_002:0486b20_2": "若言無智不應一。",
    "X65n1295_002:0486b21_3": "若言有智不應二。",
    "X65n1295_002:0486b21_4": "一二之義云何。",
    "X65n1295_002:0486b22_5": "世尊曰。",
    "X65n1295_002:0486b22_6": "大王。",
    "X65n1295_002:0486b22_7": "汝於過去龍光佛法中曾問此義。",
    "X65n1295_002:0486b23_8": "我今無說汝今無聽。",
    "X65n1295_002:0486b23_9": "無說無聽是名一義二義。",
    "X65n1295_002:0486b24_10": "　頌曰。",
    "X65n1295_002:0486c01_0": "問處奇特。",
    "X65n1295_002:0486c01_1": "答處殊絕。",
    "X65n1295_002:0486c01_2": "一二義諦。",
    "X65n1295_002:0486c01_3": "驪龍角折。",
    "X65n1295_002:0486c01_4": "(真如哲)。",
    "X65n1295_002:0486c02_0": "無聽無說意無窮。",
    "X65n1295_002:0486c02_1": "鐵壁銀山一線通。",
    "X65n1295_002:0486c02_2": "何處是渠真聖諦。",
    "X65n1295_002:0486c03_3": "秋風昨夜到梧桐。",
    "X65n1295_002:0486c03_4": "(東谷光)。",
    "X65n1295_002:0486c04_0": "【增收】世尊昔至多子塔前。",
    "X65n1295_002:0486c04_1": "命摩訶迦葉分座令坐。",
    "X65n1295_002:0486c04_2": "以僧伽黎圍之。",
    "X65n1295_002:0486c05_3": "遂告云。",
    "X65n1295_002:0486c05_4": "吾有正法眼藏密付於汝。",
    "X65n1295_002:0486c06_0": "汝當護持。",
    "X65n1295_002:0486c06_1": "傳授將來毋令斷絕。",
    "X65n1295_002:0486c06_2": "　頌曰。",
    "X65n1295_002:0486c07_0": "密傳分半座。",
    "X65n1295_002:0486c07_1": "正好驀面唾。",
    "X65n1295_002:0486c07_2": "不與麼且放過。",
    "X65n1295_002:0486c07_3": "子孫未免遭殃禍。",
    "X65n1295_002:0486c08_4": "(海印信)。",
    "X65n1295_002:0486c09_0": "僧問興化。",
    "X65n1295_002:0486c09_1": "多子塔前共談何事。",
    "X65n1295_002:0486c09_2": "化曰。",
    "X65n1295_002:0486c09_3": "一人傳虗。",
    "X65n1295_002:0486c10_0": "萬人傳實。",
    "X65n1295_002:0486c10_1": "　頌曰。",
    "X65n1295_002:0486c11_0": "於道無所證。",
    "X65n1295_002:0486c11_1": "方通萬法路。",
    "X65n1295_002:0486c11_2": "或明或闇行。",
    "X65n1295_002:0486c11_3": "不慎亦不護。",
    "X65n1295_002:0486c12_0": "月來松色寒。",
    "X65n1295_002:0486c12_1": "雲去青山露。",
    "X65n1295_002:0486c12_2": "今古天台橋。",
    "X65n1295_002:0486c12_3": "幾人能得度。",
    "X65n1295_002:0486c13_0": "(投子青)。",
    "X65n1295_002:0486c14_0": "【增收】世尊因黑齒梵志運神力。",
    "X65n1295_002:0486c14_1": "以左右手擎合歡梧桐樹兩株。",
    "X65n1295_002:0486c15_2": "至靈山獻佛。",
    "X65n1295_002:0486c15_3": "佛云梵志。",
    "X65n1295_002:0486c15_4": "志應諾。",
    "X65n1295_002:0486c15_5": "佛云放下著。",
    "X65n1295_002:0486c16_6": "志放下左手一株。",
    "X65n1295_002:0486c16_7": "佛又云放下著。",
    "X65n1295_002:0486c16_8": "志放下右手一株。",
    "X65n1295_002:0486c17_9": "佛又云放下著。",
    "X65n1295_002:0486c17_10": "志云我兩手盡空。",
    "X65n1295_002:0486c18_0": "未審更放下個甚麼。",
    "X65n1295_002:0486c18_1": "佛云吾非教汝放捨其華。",
    "X65n1295_002:0486c19_0": "汝當放下內六根外六塵中六識。",
    "X65n1295_002:0486c19_1": "無一可捨。",
    "X65n1295_002:0486c19_2": "是你免生死處。",
    "X65n1295_002:0486c20_3": "志忽然大悟。",
    "X65n1295_002:0486c20_4": "　頌曰。",
    "X65n1295_002:0486c21_0": "梵志誰知有過愆。",
    "X65n1295_002:0486c21_1": "閻王業鏡照無偏。",
    "X65n1295_002:0486c21_2": "因茲見佛成羅漢。",
    "X65n1295_002:0486c22_3": "方信壺中別有天。",
    "X65n1295_002:0486c22_4": "(南堂興)。",
    "X65n1295_002:0486c23_0": "兩手擎來教放下。",
    "X65n1295_002:0486c23_1": "空身立地更疑猜。",
    "X65n1295_002:0486c23_2": "根塵識界無尋處。",
    "X65n1295_002:0486c24_3": "多謝春風爛漫開。",
    "X65n1295_002:0486c24_4": "(心聞賁)。",
    "X65n1295_002:0487a01_0": "截斷千崖路。",
    "X65n1295_002:0487a01_1": "風前活計新。",
    "X65n1295_002:0487a01_2": "誰知蓆帽下。",
    "X65n1295_002:0487a01_3": "元是昔愁人。",
    "X65n1295_002:0487a02_0": "(無際派)。",
    "X65n1295_002:0487a03_0": "【增收】世尊臨入涅槃。",
    "X65n1295_002:0487a03_1": "文殊請佛再轉法輪。",
    "X65n1295_002:0487a03_2": "世尊咄云。",
    "X65n1295_002:0487a04_0": "吾四十九年住世。",
    "X65n1295_002:0487a04_1": "未甞說一字。",
    "X65n1295_002:0487a04_2": "汝請吾再轉法輪。",
    "X65n1295_002:0487a05_3": "是吾曾轉法輪邪。",
    "X65n1295_002:0487a05_4": "　頌曰。",
    "X65n1295_002:0487a06_0": "四十九年打之遶。",
    "X65n1295_002:0487a06_1": "下梢大作師子吼。",
    "X65n1295_002:0487a06_2": "雖然未始轉法輪。",
    "X65n1295_002:0487a07_3": "畢竟分疎成應口。",
    "X65n1295_002:0487a07_4": "(無際派)。",
    "X65n1295_002:0487a08_0": "末上何曾轉法輪。",
    "X65n1295_002:0487a08_1": "只今再轉謾勞神。",
    "X65n1295_002:0487a08_2": "路行人不知天曉。",
    "X65n1295_002:0487a09_3": "猶把靈符執夜明。",
    "X65n1295_002:0487a09_4": "(北磵簡)。",
    "X65n1295_002:0487a10_0": "老漢生平太脫空。",
    "X65n1295_002:0487a10_1": "將無作有誑盲聾。",
    "X65n1295_002:0487a10_2": "臨期一語方真實。",
    "X65n1295_002:0487a11_3": "也是闍黎飯後鐘。",
    "X65n1295_002:0487a11_4": "(別山智)。",
    "X65n1295_002:0487a12_0": "世尊臨入涅槃。",
    "X65n1295_002:0487a12_1": "以手摩胷。",
    "X65n1295_002:0487a12_2": "普告人天大眾云。",
    "X65n1295_002:0487a12_3": "汝等諦觀吾紫磨金色之身。",
    "X65n1295_002:0487a13_4": "瞻仰取足。",
    "X65n1295_002:0487a13_5": "莫令後悔。",
    "X65n1295_002:0487a14_0": "若言吾滅度。",
    "X65n1295_002:0487a14_1": "非吾弟子。",
    "X65n1295_002:0487a14_2": "若言吾不滅。",
    "X65n1295_002:0487a14_3": "亦非吾弟子。",
    "X65n1295_002:0487a15_4": "　頌曰。",
    "X65n1295_002:0487a16_0": "言吾入滅非吾子。",
    "X65n1295_002:0487a16_1": "言吾不滅亦非親。",
    "X65n1295_002:0487a16_2": "但見落花隨水去。",
    "X65n1295_002:0487a17_3": "不知流出洞中春。",
    "X65n1295_002:0487a17_4": "釋迦老若為隣。",
    "X65n1295_002:0487a17_5": "臨行賣弄紫金身。",
    "X65n1295_002:0487a18_6": "雙林盡道泥洹也。",
    "X65n1295_002:0487a18_7": "夜夜羣星拱北辰。",
    "X65n1295_002:0487a18_8": "(佛鑑懃)。",
    "X65n1295_002:0487a19_0": "【續收】老倒瞿曇不識羞。",
    "X65n1295_002:0487a19_1": "臨行猶自逞風流。",
    "X65n1295_002:0487a19_2": "摩胷示眾歸何處。",
    "X65n1295_002:0487a20_3": "啼鳥一聲山更幽。",
    "X65n1295_002:0487a20_4": "(皖山凝)。",
    "X65n1295_002:0487a21_0": "滅度不滅度。",
    "X65n1295_002:0487a21_1": "總非吾弟子。",
    "X65n1295_002:0487a21_2": "更把雙趺展示人。",
    "X65n1295_002:0487a21_3": "苦瓠連根苦。",
    "X65n1295_002:0487a22_4": "(雲畊靜)。",
    "X65n1295_002:0487a23_0": "雙林樹下手摩胷。",
    "X65n1295_002:0487a23_1": "說有談無恣脫空。",
    "X65n1295_002:0487a23_2": "若謂瞿曇曾入滅。",
    "X65n1295_002:0487a24_3": "錯教啼鳥笑春風。",
    "X65n1295_002:0487a24_4": "(盧舟度)。",
    "X65n1295_002:0487b01_0": "【增收】世尊涅槃日。",
    "X65n1295_002:0487b01_1": "迦葉最後至。",
    "X65n1295_002:0487b01_2": "世尊乃於槨中露雙趺示之。",
    "X65n1295_002:0487b02_3": "迦葉乃作禮請如來。",
    "X65n1295_002:0487b02_4": "以三昧火而自闍維。",
    "X65n1295_002:0487b03_5": "即時金棺從七寶牀升舉。",
    "X65n1295_002:0487b03_6": "繞俱尸羅城七帀。",
    "X65n1295_002:0487b04_0": "却還本處。",
    "X65n1295_002:0487b04_1": "化火光三昧而自焚之。",
    "X65n1295_002:0487b04_2": "　頌曰。",
    "X65n1295_002:0487b05_0": "慚愧老胡槨示雙趺。",
    "X65n1295_002:0487b05_1": "金色尊者還會也無。",
    "X65n1295_002:0487b05_2": "目前悟得未辨精麤。",
    "X65n1295_002:0487b06_3": "繞七帀兮成何事。",
    "X65n1295_002:0487b06_4": "箇箇男兒是丈夫。",
    "X65n1295_002:0487b06_5": "(地藏恩)。",
    "X65n1295_002:0487b08_0": "未出王宮已涅槃。",
    "X65n1295_002:0487b08_1": "何須雙足露金棺。",
    "X65n1295_002:0487b08_2": "致令迦葉雙眉皺。",
    "X65n1295_002:0487b09_3": "慶喜門前倒剎竿。",
    "X65n1295_002:0487b09_4": "(佛鑑懃)。",
    "X65n1295_002:0487b11_0": "禪宗頌古聯珠通集卷第二"
}