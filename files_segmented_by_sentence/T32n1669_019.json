[
    {
        "source_sentence": "大宗地玄文本論卷第十九",
        "from": "T32n1669_019:0690b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴菩薩造",
        "from": "T32n1669_019:0690b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真諦三藏譯",
        "from": "T32n1669_019:0690b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "37 校量功德讚歎信行現示利益大決擇分校量功德讚歎信行現示利益大決擇分第三十七如是已說大不可思議重重不可稱量阿說本王大決擇分，次當說校量功德讚歎信行現示利益大決擇分。",
        "from": "T32n1669_019:0690b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何？",
        "from": "T32n1669_019:0690b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰：",
        "from": "T32n1669_019:0690b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如盛火聚，　　雖有極遠處，",
        "from": "T32n1669_019:0690b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以光明勢力，　　能破遠方闇，",
        "from": "T32n1669_019:0690b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此玄文本論，　　亦復如如是。",
        "from": "T32n1669_019:0690b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生類，　　同世界共住，",
        "from": "T32n1669_019:0690b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖未得見學；",
        "from": "T32n1669_019:0690b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能破遠眾生，　　心相不覺闇，",
        "from": "T32n1669_019:0690b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得覺知明，　　隨分伏其染。",
        "from": "T32n1669_019:0690b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如盛火聚，　　轉勝近其處，",
        "from": "T32n1669_019:0690b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明漸漸了，　　能破闇更增；",
        "from": "T32n1669_019:0690b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此玄文本論，　　亦復如如是。",
        "from": "T32n1669_019:0690b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生類，　　同一國共住，",
        "from": "T32n1669_019:0690b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖未得見學，　　此論火光明，",
        "from": "T32n1669_019:0690b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除眾生無知，　　轉轉令分明。",
        "from": "T32n1669_019:0690b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如盛火聚，　　轉轉近其處，",
        "from": "T32n1669_019:0690b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明耀更增；",
        "from": "T32n1669_019:0690b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　此玄文本論，亦復如如是。",
        "from": "T32n1669_019:0690b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若有眾生類，同一城共住，　　雖未得見學；",
        "from": "T32n1669_019:0690b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此論火光明，　　除眾生無知，",
        "from": "T32n1669_019:0690b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉轉更分明。",
        "from": "T32n1669_019:0690b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更轉近其處，　　光明重重增，",
        "from": "T32n1669_019:0690c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煖氣溫其身；",
        "from": "T32n1669_019:0690c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　此玄文本論，亦復如如是。",
        "from": "T32n1669_019:0690c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若有眾生類，同一家共住，　　雖未得見學；",
        "from": "T32n1669_019:0690c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此論火光明，　　除心惑護身，",
        "from": "T32n1669_019:0690c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉轉增長故。",
        "from": "T32n1669_019:0690c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得彼大火聚，　　此人則便得，",
        "from": "T32n1669_019:0690c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六種大利益，　　謂能塞寒氣，",
        "from": "T32n1669_019:0690c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成熟資具，　　不入毒虫等，",
        "from": "T32n1669_019:0690c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破闇常明了，　　隨請人普施，",
        "from": "T32n1669_019:0690c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚燒穢糞等；",
        "from": "T32n1669_019:0690c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　此玄文本論，亦復如如是。",
        "from": "T32n1669_019:0690c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此玄文論，　　此人即便得，",
        "from": "T32n1669_019:0690c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六種大利益，　　謂禁煩惱軍，",
        "from": "T32n1669_019:0690c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就功德品，　　不入邪魔眾，",
        "from": "T32n1669_019:0690c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破無明品類，　　般若慧現前，",
        "from": "T32n1669_019:0690c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧窮佛法財，　　來乞求眾生，",
        "from": "T32n1669_019:0690c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順普施與，　　燒滅煩惱糞。",
        "from": "T32n1669_019:0690c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比如有妙華，　　󰰙水深池中，",
        "from": "T32n1669_019:0690c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰青蓮華，　　有人剎那中，",
        "from": "T32n1669_019:0690c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見此蓮華相，　　一百七日中，",
        "from": "T32n1669_019:0690c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其眼根清白，　　終日無晦濁；",
        "from": "T32n1669_019:0690c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此玄文本論，　　亦復如如是。",
        "from": "T32n1669_019:0690c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生類，　　雖不知此論，",
        "from": "T32n1669_019:0690c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文義之大海，　　而目見此論，",
        "from": "T32n1669_019:0690c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其眼根清淨，　　見三世諸佛，",
        "from": "T32n1669_019:0690c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有作方便目。",
        "from": "T32n1669_019:0690c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懸圓生樹頂，　　名曰妙聲覺，",
        "from": "T32n1669_019:0690c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量天女子，　　聞此鼓音已，",
        "from": "T32n1669_019:0690c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二千七日中，　　其耳根清速，",
        "from": "T32n1669_019:0691a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無塞隔之事；",
        "from": "T32n1669_019:0691a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如如是，　　若有眾生類，",
        "from": "T32n1669_019:0691a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不知文義，　　而耳聞此論，",
        "from": "T32n1669_019:0691a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其耳根清淨，　　聞諸佛梵響，",
        "from": "T32n1669_019:0691a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有作方便耳。",
        "from": "T32n1669_019:0691a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生雪山之頂，　　名曰上味常，",
        "from": "T32n1669_019:0691a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人取此藥，　　著其舌之原，",
        "from": "T32n1669_019:0691a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身香極芬芬，　　不承用飲食，",
        "from": "T32n1669_019:0691a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其命極長遠，　　亦飛騰虛空；",
        "from": "T32n1669_019:0691a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此玄文本論，　　亦復如如是，",
        "from": "T32n1669_019:0691a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生類，　　此論中一字，",
        "from": "T32n1669_019:0691a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一句若一行，　　若一決擇分，",
        "from": "T32n1669_019:0691a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一卷之量，　　以舌經讀誦，",
        "from": "T32n1669_019:0691a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不知義理，　　而獲得一切，",
        "from": "T32n1669_019:0691a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸修多羅海，　　經讀誦功德。",
        "from": "T32n1669_019:0691a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比如有菩薩，　　名曰不思議，",
        "from": "T32n1669_019:0691a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大力解脫者，　　此菩薩大士，",
        "from": "T32n1669_019:0691a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通自在故，　　於一切所作，",
        "from": "T32n1669_019:0691a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆無所障礙，　　隨應悉現前；",
        "from": "T32n1669_019:0691a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此玄文本論，　　亦復如如是，",
        "from": "T32n1669_019:0691a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有諸眾生，　　觀達其義理，",
        "from": "T32n1669_019:0691a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺悟文下詮，　　通達一切法，",
        "from": "T32n1669_019:0691a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆無所障礙，　　一一覺分明。",
        "from": "T32n1669_019:0691a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比如有神王，　　名曰大安樂，",
        "from": "T32n1669_019:0691a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人須小具，　　祀祠此神王，",
        "from": "T32n1669_019:0691a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出興七寶藏，　　令得大安樂；",
        "from": "T32n1669_019:0691a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此玄文本論，　　亦復如如是，",
        "from": "T32n1669_019:0691a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有一男女，　　此玄文本論，",
        "from": "T32n1669_019:0691a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤受取讀誦，　　有人須小具，",
        "from": "T32n1669_019:0691b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專心供此人，　　即得無窮盡，",
        "from": "T32n1669_019:0691b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德智慧寶，　　無所疑畏心。",
        "from": "T32n1669_019:0691b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比如有妙香，　　名曰芬滿布，",
        "from": "T32n1669_019:0691b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有人持此香，　　遊行於遠方，",
        "from": "T32n1669_019:0691b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其經過處處，　　七七日中間，",
        "from": "T32n1669_019:0691b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有香氣不盡，　　此玄文本論，",
        "from": "T32n1669_019:0691b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如如是，　　若有一男女，",
        "from": "T32n1669_019:0691b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷擔此論部，　　遊行於遠方，",
        "from": "T32n1669_019:0691b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若度大海水，　　所有諸眾生，",
        "from": "T32n1669_019:0691b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得大利益，　　若度山野等，",
        "from": "T32n1669_019:0691b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸眾生，　　亦得大利益。",
        "from": "T32n1669_019:0691b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有妙珠，　　名曰如意寶，",
        "from": "T32n1669_019:0691b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨此珠住處，　　無量眷屬玉，",
        "from": "T32n1669_019:0691b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍周匝圍繞；",
        "from": "T32n1669_019:0691b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復如如是，　　隨其住止處，",
        "from": "T32n1669_019:0691b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十方世界，　　塵量大神王，",
        "from": "T32n1669_019:0691b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一大神王，　　各率十方界，",
        "from": "T32n1669_019:0691b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵數眷屬神，　　守護此論珠。",
        "from": "T32n1669_019:0691b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若滅正法時，　　作微塵散壞，",
        "from": "T32n1669_019:0691b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有諸神王，　　發大聲哭涕，",
        "from": "T32n1669_019:0691b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨塵所住處，　　往詣常守護。",
        "from": "T32n1669_019:0691b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持此論者，　　如是數量神，",
        "from": "T32n1669_019:0691b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若生若死後，　　常不離守護，",
        "from": "T32n1669_019:0691b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德雖無量，　　而略說如是。",
        "from": "T32n1669_019:0691b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "38 校量過患呵責誹謗現示罪業大決擇分校量過患呵責誹謗現示罪業大決擇分第三十八如是已說校量功德讚歎信行現示利益大決擇分，次當說校量過患呵責誹謗現示罪業大決擇分。",
        "from": "T32n1669_019:0691c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何？",
        "from": "T32n1669_019:0691c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰：",
        "from": "T32n1669_019:0691c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有一山，　　名曰寶輪上，",
        "from": "T32n1669_019:0691c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此山具七寶，　　更無有窮盡，",
        "from": "T32n1669_019:0691c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧窮求寶類，　　無量無邊數。",
        "from": "T32n1669_019:0691c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有珠能禁寶，　　名曰頂玻瓈，",
        "from": "T32n1669_019:0691c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人有此珠，　　則能取七寶，",
        "from": "T32n1669_019:0691c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離貧窮苦，　　獲得大安樂；",
        "from": "T32n1669_019:0691c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人無此珠，　　不能寶禁故，",
        "from": "T32n1669_019:0691c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日不能得。",
        "from": "T32n1669_019:0691c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　問所以者何？",
        "from": "T32n1669_019:0691c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無珠人詣，　　唯見虎狼熊，",
        "from": "T32n1669_019:0691c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及赤蛇青蛇，　　種種雜毒虫，",
        "from": "T32n1669_019:0691c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不見珍寶。",
        "from": "T32n1669_019:0691c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其心極疑怖，　　狂亂而馳走，",
        "from": "T32n1669_019:0691c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至于死滅。",
        "from": "T32n1669_019:0691c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼求珍人，　　福薄罪重故，",
        "from": "T32n1669_019:0691c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不能見得。",
        "from": "T32n1669_019:0691c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善根甚深人，　　捧堅固信珠，",
        "from": "T32n1669_019:0691c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大乘深海，　　取功德之寶，",
        "from": "T32n1669_019:0691c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生死苦輪。",
        "from": "T32n1669_019:0691c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見甚深論，　　無實信心故，",
        "from": "T32n1669_019:0691c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依正作邪解，　　受苦輪無期。",
        "from": "T32n1669_019:0691c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如生盲人，　　得妙莊嚴具，",
        "from": "T32n1669_019:0691c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有歡樂事；",
        "from": "T32n1669_019:0691c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖得甚深論，　　其愚癡極故，",
        "from": "T32n1669_019:0691c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不覺出世寶，　　無有學習心。",
        "from": "T32n1669_019:0691c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如居井龍，　　從流水至海，",
        "from": "T32n1669_019:0691c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大迷大亂故，　　謗海而命終；",
        "from": "T32n1669_019:0691c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡人亦如是，　　自所習堅執，",
        "from": "T32n1669_019:0691c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定一不移轉，　　聞未曾有法，",
        "from": "T32n1669_019:0691c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大迷大亂故，　　誹謗其廣大，",
        "from": "T32n1669_019:0692a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮落惡道中，　　無有出離期。",
        "from": "T32n1669_019:0692a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生類，　　見聞斯論教，",
        "from": "T32n1669_019:0692a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信心誹謗，　　此人則誹謗，",
        "from": "T32n1669_019:0692a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世一切佛、　　三世諸法藏、",
        "from": "T32n1669_019:0692a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世諸僧海，　　此人所得罪，",
        "from": "T32n1669_019:0692a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無量數，　　不能知邊際。",
        "from": "T32n1669_019:0692a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方界塵量，　　諸佛大菩薩，",
        "from": "T32n1669_019:0692a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時悉出現，　　宣說如是量，",
        "from": "T32n1669_019:0692a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法門之大海，　　專教化此人，",
        "from": "T32n1669_019:0692a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經過無量劫，　　終不能教化。",
        "from": "T32n1669_019:0692a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問所以者何？",
        "from": "T32n1669_019:0692a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　唯宣說此法，無餘別道故。",
        "from": "T32n1669_019:0692a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方界塵量，　　諸佛大菩薩，",
        "from": "T32n1669_019:0692a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大神通力，　　向未來遠劫，",
        "from": "T32n1669_019:0692a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察其限界，　　無覺道之期。",
        "from": "T32n1669_019:0692a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問所以者何？",
        "from": "T32n1669_019:0692a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大金剛軌則，　　到大涅槃岸，",
        "from": "T32n1669_019:0692a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有是處故。",
        "from": "T32n1669_019:0692a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　是故諸行者，以勤修方便，　　應觀其法海。",
        "from": "T32n1669_019:0692a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能達其原，　　妄生誹謗心，",
        "from": "T32n1669_019:0692a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮落惡道中，　　無有出離期。",
        "from": "T32n1669_019:0692a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定不應作，　　決定不應作，",
        "from": "T32n1669_019:0692a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪業雖無量，　　而略說如是。",
        "from": "T32n1669_019:0692a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大宗地玄文本論卷第十九",
        "from": "T32n1669_019:0692a25_100",
        "context_with_next_sentence": false
    }
]