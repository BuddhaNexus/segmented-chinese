[
    {
        "source_sentence": "一切如來心祕密全身舍利寶篋",
        "from": "T19n1022B_001:0712b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印陀羅尼經",
        "from": "T19n1022B_001:0712b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進試鴻臚卿大興善寺三藏沙門",
        "from": "T19n1022B_001:0712b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大廣智不空奉　詔譯如是我聞。",
        "from": "T19n1022B_001:0712b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在摩伽陀國無垢園中寶光明池。",
        "from": "T19n1022B_001:0712b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩及大聲聞天龍藥叉犍闥婆訶蘇羅迦樓羅緊那羅摩睺羅伽人非人等無量百千。",
        "from": "T19n1022B_001:0712b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後圍遶。",
        "from": "T19n1022B_001:0712b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時眾中有一大婆羅門名無垢妙光多聞聰慧人所樂見。",
        "from": "T19n1022B_001:0712b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常行十善歸信三寶。",
        "from": "T19n1022B_001:0712b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善心殷重智慧微細。",
        "from": "T19n1022B_001:0712b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常恒欲令一切眾生。",
        "from": "T19n1022B_001:0712b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿善利大富豐饒。",
        "from": "T19n1022B_001:0712b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門無垢妙光從座而起。",
        "from": "T19n1022B_001:0712b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛所遶佛七匝。",
        "from": "T19n1022B_001:0712b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以眾香華奉獻世尊。",
        "from": "T19n1022B_001:0712b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無價妙衣瓔珞珠鬘持覆佛上。",
        "from": "T19n1022B_001:0712b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足却住一面作是請言。",
        "from": "T19n1022B_001:0712b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊與諸大眾。",
        "from": "T19n1022B_001:0712b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日晨朝至我宅中受我供養。",
        "from": "T19n1022B_001:0712b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊默然許之。",
        "from": "T19n1022B_001:0712b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門知佛受請。",
        "from": "T19n1022B_001:0712b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽還所住。",
        "from": "T19n1022B_001:0712b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於夜間廣辦餚膳百味飲食。",
        "from": "T19n1022B_001:0712b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑掃殿宇張施幡蓋。",
        "from": "T19n1022B_001:0712b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至明旦己與諸眷屬。",
        "from": "T19n1022B_001:0712b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持眾香華及諸妓樂。",
        "from": "T19n1022B_001:0712c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如來所白言時至。",
        "from": "T19n1022B_001:0712c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂降臨。",
        "from": "T19n1022B_001:0712c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊軟語。",
        "from": "T19n1022B_001:0712c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安慰彼婆羅門無垢妙光。",
        "from": "T19n1022B_001:0712c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍告大眾宣言。",
        "from": "T19n1022B_001:0712c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等皆應往彼婆羅門家攝受供養。",
        "from": "T19n1022B_001:0712c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲令彼獲大利故。",
        "from": "T19n1022B_001:0712c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時世尊即從座起。",
        "from": "T19n1022B_001:0712c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔起座已。",
        "from": "T19n1022B_001:0712c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從佛身出種種光明。",
        "from": "T19n1022B_001:0712c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間錯妙色照觸十方。",
        "from": "T19n1022B_001:0712c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆警覺然後趣道。",
        "from": "T19n1022B_001:0712c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門以恭敬心持妙香華。",
        "from": "T19n1022B_001:0712c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眷屬及天龍八部釋梵四王。",
        "from": "T19n1022B_001:0712c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先行治道奉引如來。",
        "from": "T19n1022B_001:0712c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊前路不遠。",
        "from": "T19n1022B_001:0712c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中至一園名曰豐財。",
        "from": "T19n1022B_001:0712c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼園中有古朽塔摧壞崩倒荊棘掩庭蔓草封戶。",
        "from": "T19n1022B_001:0712c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓦礫埋隱狀若土堆。",
        "from": "T19n1022B_001:0712c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊逕往塔所。",
        "from": "T19n1022B_001:0712c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時塔上放大光明照耀熾盛。",
        "from": "T19n1022B_001:0712c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於土聚中出聲讚言。",
        "from": "T19n1022B_001:0712c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦牟尼。",
        "from": "T19n1022B_001:0712c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日所行極善境界。",
        "from": "T19n1022B_001:0712c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又婆羅門汝於今日獲大善利。",
        "from": "T19n1022B_001:0712c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊禮彼朽塔右繞三迊。",
        "from": "T19n1022B_001:0712c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫身上衣用覆其上。",
        "from": "T19n1022B_001:0712c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泫然垂淚涕血交流。",
        "from": "T19n1022B_001:0712c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泣已微笑。",
        "from": "T19n1022B_001:0712c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當爾之時十方諸佛。",
        "from": "T19n1022B_001:0712c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆同觀視亦皆流淚。",
        "from": "T19n1022B_001:0712c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各所放光來照是塔。",
        "from": "T19n1022B_001:0712c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時大眾驚愕變色互欲決疑。",
        "from": "T19n1022B_001:0712c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩等亦皆流淚。",
        "from": "T19n1022B_001:0712c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威焰熾盛執杵旋轉。",
        "from": "T19n1022B_001:0712c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛所白言世尊。",
        "from": "T19n1022B_001:0712c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此何因緣現是光相。",
        "from": "T19n1022B_001:0712c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何如來眼流淚如是。",
        "from": "T19n1022B_001:0712c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦彼十方諸佛大瑞光相現前。",
        "from": "T19n1022B_001:0712c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來於此大眾解釋我疑。",
        "from": "T19n1022B_001:0712c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時薄伽梵告金剛手。",
        "from": "T19n1022B_001:0712c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大全身舍利積聚如來寶塔。",
        "from": "T19n1022B_001:0712c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來無量俱胝心陀羅尼密印法要今在其中。",
        "from": "T19n1022B_001:0712c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手有此法要在是中故。",
        "from": "T19n1022B_001:0712c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔即變為重疊無隙如胡麻子。",
        "from": "T19n1022B_001:0712c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱胝百千如來之身。",
        "from": "T19n1022B_001:0712c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知亦是如胡麻子。",
        "from": "T19n1022B_001:0712c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千俱胝如來全身舍利之聚。",
        "from": "T19n1022B_001:0712c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至八萬四千法蘊亦在其中。",
        "from": "T19n1022B_001:0712c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十九百千萬俱胝如來頂相亦在其中。",
        "from": "T19n1022B_001:0712c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是妙事是塔所在之處。",
        "from": "T19n1022B_001:0713a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大神驗殊勝威德。",
        "from": "T19n1022B_001:0713a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滿一切世間吉慶。",
        "from": "T19n1022B_001:0713a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾聞佛是說。",
        "from": "T19n1022B_001:0713a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠塵離垢斷諸煩惱得法眼淨。",
        "from": "T19n1022B_001:0713a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時眾機異利益亦別須陀洹果斯陀含果阿那含果阿羅漢果辟支佛道。",
        "from": "T19n1022B_001:0713a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及菩薩道阿鞞跋致薩波若智。",
        "from": "T19n1022B_001:0713a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於如是事各得其一。",
        "from": "T19n1022B_001:0713a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有證得初地二地乃至十地。",
        "from": "T19n1022B_001:0713a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有滿足六波羅蜜。",
        "from": "T19n1022B_001:0713a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其婆羅門遠塵離垢得五神通。",
        "from": "T19n1022B_001:0713a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛手見此奇特希有之事。",
        "from": "T19n1022B_001:0713a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白言世尊妙哉奇異。",
        "from": "T19n1022B_001:0713a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但聞此事尚獲如是殊勝功德況聞深理至心起信得幾功德。",
        "from": "T19n1022B_001:0713a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言諦聽汝金剛手。",
        "from": "T19n1022B_001:0713a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後世若有信男信女及復我等四部弟子。",
        "from": "T19n1022B_001:0713a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心書寫此一經典。",
        "from": "T19n1022B_001:0713a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即准書寫九十九百千萬俱胝如來所說一切經典。",
        "from": "T19n1022B_001:0713a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即過於彼九十九百千萬俱胝如來之前久植善根。",
        "from": "T19n1022B_001:0713a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即亦彼諸一切如來。",
        "from": "T19n1022B_001:0713a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持護念猶如愛眼。",
        "from": "T19n1022B_001:0713a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如慈母愛護幼子。",
        "from": "T19n1022B_001:0713a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人讀誦此一卷經。",
        "from": "T19n1022B_001:0713a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為讀誦過去現在未來諸佛所說經典。",
        "from": "T19n1022B_001:0713a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如是故。",
        "from": "T19n1022B_001:0713a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十九百千萬俱胝一切如來應正等覺。",
        "from": "T19n1022B_001:0713a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "側塞無隙猶如胡麻重疊赴來。",
        "from": "T19n1022B_001:0713a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜現身加持其人。",
        "from": "T19n1022B_001:0713a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切諸佛如來無數恒沙。",
        "from": "T19n1022B_001:0713a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前聚未去後群重來須臾推遷迴轉更赴。",
        "from": "T19n1022B_001:0713a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如細沙在水旋急。",
        "from": "T19n1022B_001:0713a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得停滯迴去復來。",
        "from": "T19n1022B_001:0713a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人以香華塗香華鬘衣服微妙嚴具供養此經。",
        "from": "T19n1022B_001:0713a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成於彼十方九十九百千萬俱胝如來之前。",
        "from": "T19n1022B_001:0713a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以天香華衣服嚴具七寶所成。",
        "from": "T19n1022B_001:0713a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積如須彌盡以供養。",
        "from": "T19n1022B_001:0713a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種植善根亦復如是。",
        "from": "T19n1022B_001:0713a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天龍八部人非人等聞是說已。",
        "from": "T19n1022B_001:0713a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各懷希奇互相謂言。",
        "from": "T19n1022B_001:0713a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉威德是朽土聚。",
        "from": "T19n1022B_001:0713a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來神力所加持故有是神變。",
        "from": "T19n1022B_001:0713a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手復白佛言。",
        "from": "T19n1022B_001:0713a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何因緣故。",
        "from": "T19n1022B_001:0713a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是七寶塔現為土聚。",
        "from": "T19n1022B_001:0713a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022B_001:0713b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非土聚乃是殊妙大寶塔耳。",
        "from": "T19n1022B_001:0713b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由諸眾生業果劣故隱蔽不現。",
        "from": "T19n1022B_001:0713b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由塔隱故如來全身非可毀壞。",
        "from": "T19n1022B_001:0713b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有如來金剛藏身而可壞哉。",
        "from": "T19n1022B_001:0713b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若滅度後世末法逼迫之時。",
        "from": "T19n1022B_001:0713b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生習行非法應墮地獄。",
        "from": "T19n1022B_001:0713b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信三寶不植善根。",
        "from": "T19n1022B_001:0713b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣佛法當隱。",
        "from": "T19n1022B_001:0713b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然猶是塔堅固不滅。",
        "from": "T19n1022B_001:0713b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來神力所持。",
        "from": "T19n1022B_001:0713b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無智眾生惑障覆蔽。",
        "from": "T19n1022B_001:0713b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徒朽珍寶不知採用。",
        "from": "T19n1022B_001:0713b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是事故我今流淚。",
        "from": "T19n1022B_001:0713b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來亦皆流淚。",
        "from": "T19n1022B_001:0713b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次佛告金剛手言。",
        "from": "T19n1022B_001:0713b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生書寫此經置塔中者。",
        "from": "T19n1022B_001:0713b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔即為一切如來金剛藏窣都婆。",
        "from": "T19n1022B_001:0713b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來陀羅尼心祕密加持窣都婆。",
        "from": "T19n1022B_001:0713b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為九十九百千萬俱胝如來窣都婆。",
        "from": "T19n1022B_001:0713b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來佛頂佛眼窣都婆。",
        "from": "T19n1022B_001:0713b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為一切如來神力所護。",
        "from": "T19n1022B_001:0713b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛像中窣都婆中安置此經。",
        "from": "T19n1022B_001:0713b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像即為七寶所成靈驗應心無願不滿。",
        "from": "T19n1022B_001:0713b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其窣都婆傘蓋羅網輪橖露盤。",
        "from": "T19n1022B_001:0713b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德字鈴鐸楹礎基階隨力所辦。",
        "from": "T19n1022B_001:0713b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或土或木若石若甎。",
        "from": "T19n1022B_001:0713b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由經威力自為七寶。",
        "from": "T19n1022B_001:0713b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來於此經典加其威力。",
        "from": "T19n1022B_001:0713b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誠實言不斷加持。",
        "from": "T19n1022B_001:0713b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情能於此塔。",
        "from": "T19n1022B_001:0713b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一香一華禮拜供養。",
        "from": "T19n1022B_001:0713b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十億劫生死重罪一時消滅。",
        "from": "T19n1022B_001:0713b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生免災殃死生佛家。",
        "from": "T19n1022B_001:0713b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有應墮阿鼻地獄。",
        "from": "T19n1022B_001:0713b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於此塔。",
        "from": "T19n1022B_001:0713b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一禮拜。",
        "from": "T19n1022B_001:0713b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一右遶。",
        "from": "T19n1022B_001:0713b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塞地獄門開菩提路。",
        "from": "T19n1022B_001:0713b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔及形像所在之處。",
        "from": "T19n1022B_001:0713b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來神力所護。",
        "from": "T19n1022B_001:0713b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處不為暴風雷電霹靂所害。",
        "from": "T19n1022B_001:0713b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為毒蛇蚖蝮毒蟲毒獸所傷。",
        "from": "T19n1022B_001:0713b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為師子狂象虎狼野干蜂蠆之所傷害。",
        "from": "T19n1022B_001:0713b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無藥叉羅剎部多那毘舍。",
        "from": "T19n1022B_001:0713b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮魑魅魍魎癲癎之怖。",
        "from": "T19n1022B_001:0713b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不為一切寒熱諸病。",
        "from": "T19n1022B_001:0713b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癧瘻癰疽瘡疣疥癩所染。",
        "from": "T19n1022B_001:0713b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人暫見是塔能除一切災難。",
        "from": "T19n1022B_001:0713b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處亦無人馬六畜童子童女疫癘之患。",
        "from": "T19n1022B_001:0713c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為橫死非命所夭。",
        "from": "T19n1022B_001:0713c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為刀杖水火所傷。",
        "from": "T19n1022B_001:0713c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為盜賊怨讎所侵。",
        "from": "T19n1022B_001:0713c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無飢饉貧乏之憂。",
        "from": "T19n1022B_001:0713c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭魅呪咀不能得便。",
        "from": "T19n1022B_001:0713c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王與諸眷屬晝夜衛護。",
        "from": "T19n1022B_001:0713c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八部大藥叉將。",
        "from": "T19n1022B_001:0713c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月五星幢雲彗星晝夜護持。",
        "from": "T19n1022B_001:0713c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切龍王加其精氣順時降雨。",
        "from": "T19n1022B_001:0713c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天與忉利天。",
        "from": "T19n1022B_001:0713c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三時下來亦為供養。",
        "from": "T19n1022B_001:0713c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸仙三時來集。",
        "from": "T19n1022B_001:0713c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚詠旋遶禮謝瞻仰。",
        "from": "T19n1022B_001:0713c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因與諸天女。",
        "from": "T19n1022B_001:0713c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜三時來下供養。",
        "from": "T19n1022B_001:0713c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處即為一切如來護念加持。",
        "from": "T19n1022B_001:0713c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由納經故塔即如是。",
        "from": "T19n1022B_001:0713c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人作塔以土石木金銀銅鉛。",
        "from": "T19n1022B_001:0713c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此神呪安置其中。",
        "from": "T19n1022B_001:0713c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔安置已。",
        "from": "T19n1022B_001:0713c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔即為七寶所成。",
        "from": "T19n1022B_001:0713c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下階級露盤傘蓋。",
        "from": "T19n1022B_001:0713c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鈴鐸輪樘純為七寶。",
        "from": "T19n1022B_001:0713c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔四方如來形相。",
        "from": "T19n1022B_001:0713c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由法要故。",
        "from": "T19n1022B_001:0713c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來堅住護持晝夜不去。",
        "from": "T19n1022B_001:0713c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其七寶塔全身舍利之妙寶藏以呪威力擢竦。",
        "from": "T19n1022B_001:0713c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高至阿迦尼吒天宮之中。",
        "from": "T19n1022B_001:0713c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔所串峙一切諸天。",
        "from": "T19n1022B_001:0713c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜瞻仰守衛供養。",
        "from": "T19n1022B_001:0713c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言何因緣故。",
        "from": "T19n1022B_001:0713c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法如是殊勝功德。",
        "from": "T19n1022B_001:0713c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言當知以此寶篋印陀羅尼威神力故。",
        "from": "T19n1022B_001:0713c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T19n1022B_001:0713c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來哀愍我等。",
        "from": "T19n1022B_001:0713c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼。",
        "from": "T19n1022B_001:0713c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言諦聽思念莫忘。",
        "from": "T19n1022B_001:0713c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在未來一切如來分身光儀。",
        "from": "T19n1022B_001:0713c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸佛全身舍利。",
        "from": "T19n1022B_001:0713c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆在寶篋印陀羅尼。",
        "from": "T19n1022B_001:0713c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸如來所有三身亦在是中。",
        "from": "T19n1022B_001:0713c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說陀羅尼曰。",
        "from": "T19n1022B_001:0713c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫悉怛哩野四合地尾二合迦南一薩婆怛他蘖多喃二唵三部尾婆嚩娜嚩唎四嚩者梨五嚩者𪘨智皆反六祖嚕祖嚕馱囉馱囉七薩嚩怛他蘖多八馱引覩馱梨鉢娜𤚥二合婆嚩底九惹也嚩梨十畝怛梨二合薩磨二合囉十一怛他蘖多達磨斫迦囉十二鉢羅二合靺栗多二合娜嚩日羅二合梨音󰂛地滿拏十三楞迦囉十四楞訖哩二合諦十五薩嚩怛他引蘖多地瑟恥二合諦十六󰂛馱野󰂛馱野十七󰂛地󰂛地十八沒𠆙沒𠆙十九參󰂛馱儞參󰂛馱野二十者攞者攞二十一者懶都二十二薩嚩嚩囉拏儞二十三薩嚩播波尾蘖諦二十四戶嚕戶嚕二十五薩嚩戍迦弭蘖帝二十六薩嚩怛他蘖多二十七紇哩二合娜野嚩日囉二合抳二十八三婆囉三婆囉二十九薩嚩怛他蘖多三十虞呬野二合馱囉抳畝涅梨二合三十一沒悌蘇沒悌三十二薩嚩怛他蘖多引地瑟恥二合多三十三馱覩蘖陛娑嚩二合賀三十四三摩耶引地瑟恥二合帝娑嚩二合訶三十五薩嚩怛他蘖多紇哩二合娜野馱覩畝捺犁二合娑嚩二合訶三十六蘇鉢羅二合底瑟恥二合多薩覩二合閉怛他蘖多地瑟恥二合帝戶嚕戶嚕吽吽娑嚩二合訶三十七唵薩嚩怛他蘖多三十八塢瑟抳二合沙馱覩畝捺囉二合尼薩嚩怛他蘖單娑馱覩尾部使多地瑟恥二合帝三十九吽吽娑嚩二合訶引四十爾時佛說是神呪已。",
        "from": "T19n1022B_001:0714a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來自土聚中出聲讚言。",
        "from": "T19n1022B_001:0714a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦世尊。",
        "from": "T19n1022B_001:0714a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出濁惡世為利無依無怙眾生。",
        "from": "T19n1022B_001:0714a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演說深法。",
        "from": "T19n1022B_001:0714a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是法要久住世間。",
        "from": "T19n1022B_001:0714a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益廣多安穩快樂。",
        "from": "T19n1022B_001:0714a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時佛告金剛手言。",
        "from": "T19n1022B_001:0714a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽諦聽如是法要。",
        "from": "T19n1022B_001:0714a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力無窮利益無邊。",
        "from": "T19n1022B_001:0714a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如幢上如意寶珠。",
        "from": "T19n1022B_001:0714a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常雨珍寶滿一切願。",
        "from": "T19n1022B_001:0714a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今略說萬分之一。",
        "from": "T19n1022B_001:0714a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝宜憶持利益一切。",
        "from": "T19n1022B_001:0714a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有惡人死墮地獄。",
        "from": "T19n1022B_001:0714a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受苦無間免脫無期。",
        "from": "T19n1022B_001:0714a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有其子孫稱亡者名。",
        "from": "T19n1022B_001:0714a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦上神呪纔至七遍。",
        "from": "T19n1022B_001:0714a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洋銅熱鐵忽然變為八功德池。",
        "from": "T19n1022B_001:0714a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮生承足寶蓋駐頂。",
        "from": "T19n1022B_001:0714a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄門破菩提道開。",
        "from": "T19n1022B_001:0714a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其蓮如飛至極樂界。",
        "from": "T19n1022B_001:0714a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切種智自然顯發。",
        "from": "T19n1022B_001:0714b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂說無窮位在補處。",
        "from": "T19n1022B_001:0714b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有眾生重罪報故。",
        "from": "T19n1022B_001:0714b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百病集身苦痛逼心。",
        "from": "T19n1022B_001:0714b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此神呪二十一遍。",
        "from": "T19n1022B_001:0714b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百病萬惱一時消滅。",
        "from": "T19n1022B_001:0714b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命延長福德無盡。",
        "from": "T19n1022B_001:0714b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人慳貪業故生貧窮家。",
        "from": "T19n1022B_001:0714b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣不隱身食不續命。",
        "from": "T19n1022B_001:0714b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𮡚瘦衰蔽人所惡賤。",
        "from": "T19n1022B_001:0714b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人慚愧入山折採無主搹華。",
        "from": "T19n1022B_001:0714b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若磨朽木持以號香。",
        "from": "T19n1022B_001:0714b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往至塔前禮拜供養。",
        "from": "T19n1022B_001:0714b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋遶七匝流淚悔過。",
        "from": "T19n1022B_001:0714b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由神呪力及塔威德。",
        "from": "T19n1022B_001:0714b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅貧窮報富貴忽至。",
        "from": "T19n1022B_001:0714b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶如雨無所闕乏。",
        "from": "T19n1022B_001:0714b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但當此時彌飾佛法施與貧乏。",
        "from": "T19n1022B_001:0714b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有悋惜財寶忽滅。",
        "from": "T19n1022B_001:0714b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人為種善根隨分造塔。",
        "from": "T19n1022B_001:0714b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或泥或甎隨力所辦。",
        "from": "T19n1022B_001:0714b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大如菴羅高四指許。",
        "from": "T19n1022B_001:0714b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫神呪安置其中。",
        "from": "T19n1022B_001:0714b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持以香華禮拜供養。",
        "from": "T19n1022B_001:0714b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其呪力及信心故。",
        "from": "T19n1022B_001:0714b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自小塔中出大香雲。",
        "from": "T19n1022B_001:0714b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香氣雲光周遍法界。",
        "from": "T19n1022B_001:0714b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薰馥晃曜廣作佛事。",
        "from": "T19n1022B_001:0714b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得功德如上所說。",
        "from": "T19n1022B_001:0714b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取要言之無願不滿。",
        "from": "T19n1022B_001:0714b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有末世四輩弟子善男善女。",
        "from": "T19n1022B_001:0714b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為無上道盡力造塔安置神呪。",
        "from": "T19n1022B_001:0714b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所得功德說不可盡。",
        "from": "T19n1022B_001:0714b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人求福至其塔所。",
        "from": "T19n1022B_001:0714b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一華一香禮拜供養右旋行道。",
        "from": "T19n1022B_001:0714b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是功德官位榮耀不求自至。",
        "from": "T19n1022B_001:0714b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命富饒不祈自增。",
        "from": "T19n1022B_001:0714b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨家盜賊不討自敗。",
        "from": "T19n1022B_001:0714b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨念呪咀不厭歸本。",
        "from": "T19n1022B_001:0714b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疫癘邪氣不拔自避。",
        "from": "T19n1022B_001:0714b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善夫良婦不求自得。",
        "from": "T19n1022B_001:0714b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢男美女不禱自生。",
        "from": "T19n1022B_001:0714b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所願任意滿足。",
        "from": "T19n1022B_001:0714b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有烏雀鵄梟鳩鴿。",
        "from": "T19n1022B_001:0714b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鵂鶹狗狼野干蚊虻蟻螻之類。",
        "from": "T19n1022B_001:0714b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫來塔影及踏場草。",
        "from": "T19n1022B_001:0714b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧破惑障覺悟無明。",
        "from": "T19n1022B_001:0714b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽入佛家恣領法財。",
        "from": "T19n1022B_001:0714b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況有眾人或見塔形。",
        "from": "T19n1022B_001:0714b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或聞鐸聲或聞其名。",
        "from": "T19n1022B_001:0714b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或當其影罪障悉滅所求如意。",
        "from": "T19n1022B_001:0714b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世安穩後生極樂。",
        "from": "T19n1022B_001:0714b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或人隨力以一丸泥塗塔壞壁。",
        "from": "T19n1022B_001:0714b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運一拳石扶塔礩傾。",
        "from": "T19n1022B_001:0714b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此功德增福延壽。",
        "from": "T19n1022B_001:0714b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後成轉輪王。",
        "from": "T19n1022B_001:0714b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若我滅後四部弟子。",
        "from": "T19n1022B_001:0714c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是塔前濟苦界故。",
        "from": "T19n1022B_001:0714c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養香華至心發願誦念神呪。",
        "from": "T19n1022B_001:0714c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文文句句放大光明。",
        "from": "T19n1022B_001:0714c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照觸三途苦具皆辟。",
        "from": "T19n1022B_001:0714c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生脫苦佛種牙萌。",
        "from": "T19n1022B_001:0714c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意往生十方淨土。",
        "from": "T19n1022B_001:0714c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人往在高山峰上至心誦呪。",
        "from": "T19n1022B_001:0714c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼根所及。",
        "from": "T19n1022B_001:0714c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠近世界。",
        "from": "T19n1022B_001:0714c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山谷林野江湖河海。",
        "from": "T19n1022B_001:0714c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中所有毛羽鱗甲一切生類。",
        "from": "T19n1022B_001:0714c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "碎破惑障覺悟無明。",
        "from": "T19n1022B_001:0714c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯現本有三種佛性。",
        "from": "T19n1022B_001:0714c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟安處大涅槃中。",
        "from": "T19n1022B_001:0714c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若與此人往過道路。",
        "from": "T19n1022B_001:0714c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或觸衣風或踏其跡。",
        "from": "T19n1022B_001:0714c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或唯見面或暫交語。",
        "from": "T19n1022B_001:0714c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等人重罪咸滅悉地圓滿。",
        "from": "T19n1022B_001:0714c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告金剛手言。",
        "from": "T19n1022B_001:0714c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此祕密神呪經典付囑汝等。",
        "from": "T19n1022B_001:0714c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊重護持流布世間。",
        "from": "T19n1022B_001:0714c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不令眾生傳受斷絕。",
        "from": "T19n1022B_001:0714c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T19n1022B_001:0714c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今幸蒙世尊付囑。",
        "from": "T19n1022B_001:0714c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願我等為報世尊深重恩德。",
        "from": "T19n1022B_001:0714c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜護持流布宣揚一切世間。",
        "from": "T19n1022B_001:0714c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生書寫受持憶念不斷。",
        "from": "T19n1022B_001:0714c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等麾催釋梵四王龍神八部。",
        "from": "T19n1022B_001:0714c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜守護不暫捨離。",
        "from": "T19n1022B_001:0714c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言善哉金剛手。",
        "from": "T19n1022B_001:0714c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝為未來世一切眾生大利益故。",
        "from": "T19n1022B_001:0714c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護持此法令不斷絕。",
        "from": "T19n1022B_001:0714c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T19n1022B_001:0714c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此寶篋印陀羅尼廣作佛事。",
        "from": "T19n1022B_001:0714c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後往彼婆羅門家受諸供養。",
        "from": "T19n1022B_001:0714c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令時人天獲大福利却還所住。",
        "from": "T19n1022B_001:0714c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾比丘比丘尼優婆塞優婆夷。",
        "from": "T19n1022B_001:0714c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍夜叉犍闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T19n1022B_001:0714c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T19n1022B_001:0714c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經與大明藏興函。",
        "from": "T19n1022B_001:0714c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌離部第八。",
        "from": "T19n1022B_001:0714c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空所譯寶篋印陀羅尼經同本。",
        "from": "T19n1022B_001:0714c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而其異不少也。",
        "from": "T19n1022B_001:0714c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此本者。",
        "from": "T19n1022B_001:0714c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照金剛及慈覺智證三師之請來。",
        "from": "T19n1022B_001:0714c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文義通暢也。",
        "from": "T19n1022B_001:0714c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先亮汰和上註此本行天下。",
        "from": "T19n1022B_001:0714c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今因刻諸軌。",
        "from": "T19n1022B_001:0714c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更標藏本之異於冠。",
        "from": "T19n1022B_001:0714c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上木。",
        "from": "T19n1022B_001:0714c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　豐山勤息　快道　誌",
        "from": "T19n1022B_001:0715a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　　　　　　　慈順",
        "from": "T19n1022B_001:0715a03_0",
        "context_with_next_sentence": true
    }
]