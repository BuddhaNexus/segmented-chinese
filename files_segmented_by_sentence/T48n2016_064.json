{
    "T48n2016_064:0776a26_0": "宗鏡錄卷第六十四",
    "T48n2016_064:0776a28_0": "慧日永明寺主智覺禪師延壽集",
    "T48n2016_064:0776a29_0": "第七夢覺相違難。",
    "T48n2016_064:0776a29_1": "唯識論云。",
    "T48n2016_064:0776a29_2": "若覺時色。",
    "T48n2016_064:0776a29_3": "皆如夢境不離識者。",
    "T48n2016_064:0776b01_4": "如從夢覺。",
    "T48n2016_064:0776b01_5": "知彼唯心。",
    "T48n2016_064:0776b01_6": "何故覺時於自色境。",
    "T48n2016_064:0776b02_7": "不知唯識。",
    "T48n2016_064:0776b02_8": "答。",
    "T48n2016_064:0776b02_9": "唯識論云。",
    "T48n2016_064:0776b02_10": "如夢未覺。",
    "T48n2016_064:0776b03_11": "不能自知。",
    "T48n2016_064:0776b03_12": "要至覺時。",
    "T48n2016_064:0776b03_13": "方能追覺。",
    "T48n2016_064:0776b03_14": "覺時境色應知亦爾。",
    "T48n2016_064:0776b04_15": "未真覺位。",
    "T48n2016_064:0776b04_16": "不能自知。",
    "T48n2016_064:0776b04_17": "至真覺時。",
    "T48n2016_064:0776b04_18": "方能追覺。",
    "T48n2016_064:0776b05_19": "未得真覺。",
    "T48n2016_064:0776b05_20": "恒處夢中。",
    "T48n2016_064:0776b05_21": "故佛說為生死長夜。",
    "T48n2016_064:0776b06_22": "由斯未了色境唯識。",
    "T48n2016_064:0776b06_23": "即第七是生死長夜根本。",
    "T48n2016_064:0776b07_24": "能令起惑造業。",
    "T48n2016_064:0776b07_25": "三界輪迴。",
    "T48n2016_064:0776b07_26": "直須至真覺位時。",
    "T48n2016_064:0776b08_27": "方知一切皆是唯識。",
    "T48n2016_064:0776b08_28": "所以唯識樞要問云。",
    "T48n2016_064:0776b09_29": "若諸識生似我法時。",
    "T48n2016_064:0776b09_30": "為皆由我法分別熏習之力。",
    "T48n2016_064:0776b10_31": "為亦不由。",
    "T48n2016_064:0776b10_32": "若皆由者。",
    "T48n2016_064:0776b10_33": "八識五識無二分別。",
    "T48n2016_064:0776b11_34": "生果時應不似二。",
    "T48n2016_064:0776b11_35": "若不由者。",
    "T48n2016_064:0776b11_36": "此中何故但說我法熏習為因。",
    "T48n2016_064:0776b12_37": "答。",
    "T48n2016_064:0776b12_38": "二解俱得。",
    "T48n2016_064:0776b12_39": "其皆由解者。",
    "T48n2016_064:0776b13_40": "一切有漏。",
    "T48n2016_064:0776b13_41": "與第七二分別俱故。",
    "T48n2016_064:0776b13_42": "或第六識。",
    "T48n2016_064:0776b14_43": "二分別引故。",
    "T48n2016_064:0776b14_44": "後生果時。",
    "T48n2016_064:0776b14_45": "皆似我法。",
    "T48n2016_064:0776b14_46": "其不由解者。",
    "T48n2016_064:0776b15_47": "此說第六根本。",
    "T48n2016_064:0776b15_48": "兼緣一切為因。",
    "T48n2016_064:0776b15_49": "緣發諸識令熏習故。",
    "T48n2016_064:0776b16_50": "後生果時。",
    "T48n2016_064:0776b16_51": "似我法相起。",
    "T48n2016_064:0776b16_52": "或非外似外。",
    "T48n2016_064:0776b17_53": "六七計為似外起故。",
    "T48n2016_064:0776b17_54": "如夢者。",
    "T48n2016_064:0776b17_55": "夢娑剌拏王事。",
    "T48n2016_064:0776b18_56": "此云流轉。",
    "T48n2016_064:0776b18_57": "其王容貌端正。",
    "T48n2016_064:0776b18_58": "自謂無雙。",
    "T48n2016_064:0776b19_0": "求覓形容。",
    "T48n2016_064:0776b19_1": "欲同等比。",
    "T48n2016_064:0776b19_2": "顯己殊類。",
    "T48n2016_064:0776b19_3": "時有人言。",
    "T48n2016_064:0776b19_4": "王舍城中有大迦旃延。",
    "T48n2016_064:0776b20_5": "形容甚好。",
    "T48n2016_064:0776b20_6": "世中無比。",
    "T48n2016_064:0776b20_7": "遣使迎之。",
    "T48n2016_064:0776b21_8": "迦旃延至。",
    "T48n2016_064:0776b21_9": "王出宮迎。",
    "T48n2016_064:0776b21_10": "王不及彼。",
    "T48n2016_064:0776b21_11": "人視迦旃延。",
    "T48n2016_064:0776b22_12": "無看王者。",
    "T48n2016_064:0776b22_13": "王問所以。",
    "T48n2016_064:0776b22_14": "眾曰。",
    "T48n2016_064:0776b22_15": "迦旃延容貌勝王。",
    "T48n2016_064:0776b23_16": "王問。",
    "T48n2016_064:0776b23_17": "大德。",
    "T48n2016_064:0776b23_18": "今果。",
    "T48n2016_064:0776b23_19": "宿因。",
    "T48n2016_064:0776b23_20": "迦旃延答曰。",
    "T48n2016_064:0776b23_21": "我昔出家。",
    "T48n2016_064:0776b24_22": "王作乞兒。",
    "T48n2016_064:0776b24_23": "我掃寺地。",
    "T48n2016_064:0776b24_24": "王來乞食。",
    "T48n2016_064:0776b24_25": "我掃地竟。",
    "T48n2016_064:0776b25_26": "令王除糞掃。",
    "T48n2016_064:0776b25_27": "除糞掃訖。",
    "T48n2016_064:0776b25_28": "方與王食。",
    "T48n2016_064:0776b25_29": "以此業因。",
    "T48n2016_064:0776b26_30": "生人天中。",
    "T48n2016_064:0776b26_31": "得報端正。",
    "T48n2016_064:0776b26_32": "王聞此已。",
    "T48n2016_064:0776b26_33": "尋請出家。",
    "T48n2016_064:0776b27_34": "為迦旃延弟子。",
    "T48n2016_064:0776b27_35": "後共迦旃延。",
    "T48n2016_064:0776b27_36": "往阿槃地國。",
    "T48n2016_064:0776b28_0": "山中修道。",
    "T48n2016_064:0776b28_1": "別處坐禪。",
    "T48n2016_064:0776b28_2": "阿槃地王。",
    "T48n2016_064:0776b28_3": "名鉢樹多。",
    "T48n2016_064:0776b28_4": "將宮人入山遊戲。",
    "T48n2016_064:0776b29_5": "宮人見王形貌端正。",
    "T48n2016_064:0776b29_6": "圍遶看之。",
    "T48n2016_064:0776c01_7": "鉢樹多王。",
    "T48n2016_064:0776c01_8": "見娑剌拏王。",
    "T48n2016_064:0776c01_9": "疑有欲意。",
    "T48n2016_064:0776c01_10": "問娑剌拏王曰。",
    "T48n2016_064:0776c02_11": "汝是阿羅漢耶。",
    "T48n2016_064:0776c02_12": "王答言非。",
    "T48n2016_064:0776c02_13": "次第二問餘三果。",
    "T48n2016_064:0776c03_14": "皆答言非。",
    "T48n2016_064:0776c03_15": "又言。",
    "T48n2016_064:0776c03_16": "汝離欲不。",
    "T48n2016_064:0776c03_17": "答言非。",
    "T48n2016_064:0776c04_18": "鉢樹多王瞋曰。",
    "T48n2016_064:0776c04_19": "何故入我婇女之中。",
    "T48n2016_064:0776c04_20": "遂鞭身破。",
    "T48n2016_064:0776c05_21": "悶絕而死。",
    "T48n2016_064:0776c05_22": "至夜方惺。",
    "T48n2016_064:0776c05_23": "至迦旃延所。",
    "T48n2016_064:0776c05_24": "迦旃延見已。",
    "T48n2016_064:0776c06_25": "心生悲愍。",
    "T48n2016_064:0776c06_26": "其諸同學。",
    "T48n2016_064:0776c06_27": "方為療治。",
    "T48n2016_064:0776c06_28": "娑剌拏王語迦旃延曰。",
    "T48n2016_064:0776c07_29": "我從師乞。",
    "T48n2016_064:0776c07_30": "暫還本國。",
    "T48n2016_064:0776c07_31": "舉軍破彼阿槃地國。",
    "T48n2016_064:0776c08_32": "殺鉢樹多王。",
    "T48n2016_064:0776c08_33": "事畢當還。",
    "T48n2016_064:0776c08_34": "從師修道。",
    "T48n2016_064:0776c09_35": "迦旃延從請。",
    "T48n2016_064:0776c09_36": "語曰。",
    "T48n2016_064:0776c09_37": "汝若欲去。",
    "T48n2016_064:0776c09_38": "且停一宿。",
    "T48n2016_064:0776c10_0": "迦旃延安置好處令眠。",
    "T48n2016_064:0776c10_1": "欲令感夢。",
    "T48n2016_064:0776c10_2": "夢見舉軍征阿槃地國。",
    "T48n2016_064:0776c11_3": "自軍破敗。",
    "T48n2016_064:0776c11_4": "身被他獲。",
    "T48n2016_064:0776c11_5": "堅縛手足。",
    "T48n2016_064:0776c12_6": "赤華插項。",
    "T48n2016_064:0776c12_7": "嚴鼓欲殺。",
    "T48n2016_064:0776c12_8": "王於夢中。",
    "T48n2016_064:0776c12_9": "便大恐怖。",
    "T48n2016_064:0776c13_0": "叫喚失聲云。",
    "T48n2016_064:0776c13_1": "我今無歸。",
    "T48n2016_064:0776c13_2": "願師濟拔。",
    "T48n2016_064:0776c13_3": "作歸依處。",
    "T48n2016_064:0776c14_0": "得壽命長。",
    "T48n2016_064:0776c14_1": "迦旃延以神力手指火。",
    "T48n2016_064:0776c14_2": "喚之令寤。",
    "T48n2016_064:0776c15_0": "問言。",
    "T48n2016_064:0776c15_1": "何故。",
    "T48n2016_064:0776c15_2": "其心未惺。",
    "T48n2016_064:0776c15_3": "尚言災事。",
    "T48n2016_064:0776c15_4": "迦旃延以火照而問之。",
    "T48n2016_064:0776c16_5": "此是何處。",
    "T48n2016_064:0776c16_6": "汝自看。",
    "T48n2016_064:0776c16_7": "其心方寤。",
    "T48n2016_064:0776c16_8": "迦旃延語言。",
    "T48n2016_064:0776c17_9": "汝若征彼。",
    "T48n2016_064:0776c17_10": "必當破敗。",
    "T48n2016_064:0776c17_11": "如夢所見。",
    "T48n2016_064:0776c17_12": "王曰。",
    "T48n2016_064:0776c18_0": "願師為除毒意。",
    "T48n2016_064:0776c18_1": "迦旃延為說一切諸法。",
    "T48n2016_064:0776c18_2": "譬如國土。",
    "T48n2016_064:0776c19_3": "假名無實。",
    "T48n2016_064:0776c19_4": "離舍屋等。",
    "T48n2016_064:0776c19_5": "無別國土。",
    "T48n2016_064:0776c19_6": "乃至廣說種種因緣。",
    "T48n2016_064:0776c20_7": "至一極微。",
    "T48n2016_064:0776c20_8": "亦非實事。",
    "T48n2016_064:0776c20_9": "無此無彼。",
    "T48n2016_064:0776c21_0": "無怨無親。",
    "T48n2016_064:0776c21_1": "王聞法已。",
    "T48n2016_064:0776c21_2": "得預流果。",
    "T48n2016_064:0776c21_3": "後漸獲得阿羅漢果。",
    "T48n2016_064:0776c22_4": "故知萬法唯識。",
    "T48n2016_064:0776c22_5": "夢覺一如。",
    "T48n2016_064:0776c22_6": "覺中所見。",
    "T48n2016_064:0776c23_0": "即明。",
    "T48n2016_064:0776c23_1": "了意識。",
    "T48n2016_064:0776c23_2": "夢中所見。",
    "T48n2016_064:0776c23_3": "即夢中意識。",
    "T48n2016_064:0776c23_4": "分別之意既同。",
    "T48n2016_064:0776c24_5": "差別之境何異。",
    "T48n2016_064:0776c24_6": "迷悟若此。",
    "T48n2016_064:0776c24_7": "曷疑慮焉。",
    "T48n2016_064:0776c25_8": "昏覺如斯。",
    "T48n2016_064:0776c25_9": "可洞達矣。",
    "T48n2016_064:0776c25_10": "第八外取他心難。",
    "T48n2016_064:0776c25_11": "若。",
    "T48n2016_064:0776c26_0": "論主言外色實無。",
    "T48n2016_064:0776c26_1": "是內識之境者。",
    "T48n2016_064:0776c26_2": "即可然。",
    "T48n2016_064:0776c26_3": "且如他人心是實有。",
    "T48n2016_064:0776c27_4": "豈非自心所緣耶。",
    "T48n2016_064:0776c27_5": "意云。",
    "T48n2016_064:0776c27_6": "且如此人心。",
    "T48n2016_064:0776c28_7": "若親緣得他人心著。",
    "T48n2016_064:0776c28_8": "即離此人心。",
    "T48n2016_064:0776c29_0": "別有心為境。",
    "T48n2016_064:0776c29_1": "若此人心緣他人心不著者。",
    "T48n2016_064:0776c29_2": "即有境而不緣。",
    "T48n2016_064:0777a01_3": "若緣著。",
    "T48n2016_064:0777a01_4": "即乖唯識義。",
    "T48n2016_064:0777a01_5": "若緣不著者。",
    "T48n2016_064:0777a02_6": "即何成他心智耶。",
    "T48n2016_064:0777a02_7": "論主答云。",
    "T48n2016_064:0777a02_8": "雖說他心非自識境。",
    "T48n2016_064:0777a03_9": "但不說彼是親所緣。",
    "T48n2016_064:0777a03_10": "意云雖說他人心非此人境。",
    "T48n2016_064:0777a04_11": "若此人親緣他人心。",
    "T48n2016_064:0777a04_12": "即不得。",
    "T48n2016_064:0777a04_13": "若託他人心為質。",
    "T48n2016_064:0777a05_14": "自變相分緣。",
    "T48n2016_064:0777a05_15": "亦有他心智。",
    "T48n2016_064:0777a05_16": "但變相分緣時。",
    "T48n2016_064:0777a06_17": "即不得他人本質。",
    "T48n2016_064:0777a06_18": "但由他人影像相自心上現。",
    "T48n2016_064:0777a07_19": "名了他心。",
    "T48n2016_064:0777a07_20": "即知他心相分。",
    "T48n2016_064:0777a07_21": "不離自心。",
    "T48n2016_064:0777a08_22": "亦唯識。",
    "T48n2016_064:0777a08_23": "意云。",
    "T48n2016_064:0777a08_24": "此人心緣他人心時。",
    "T48n2016_064:0777a08_25": "變起相分。",
    "T48n2016_064:0777a09_26": "當情。",
    "T48n2016_064:0777a09_27": "相分無實作用。",
    "T48n2016_064:0777a09_28": "非如手等執物。",
    "T48n2016_064:0777a09_29": "亦非如日舒光。",
    "T48n2016_064:0777a10_30": "親照其境。",
    "T48n2016_064:0777a10_31": "緣他人心時。",
    "T48n2016_064:0777a10_32": "但如鏡中影。",
    "T48n2016_064:0777a11_33": "似外質現。",
    "T48n2016_064:0777a11_34": "鏡中像。",
    "T48n2016_064:0777a11_35": "亦無實作用。",
    "T48n2016_064:0777a11_36": "緣他人心時。",
    "T48n2016_064:0777a12_37": "亦復如是。",
    "T48n2016_064:0777a12_38": "非無緣他人心體故。",
    "T48n2016_064:0777a12_39": "名了他心。",
    "T48n2016_064:0777a13_40": "非親能了。",
    "T48n2016_064:0777a13_41": "親所了者。",
    "T48n2016_064:0777a13_42": "謂自所變。",
    "T48n2016_064:0777a13_43": "又古德問。",
    "T48n2016_064:0777a14_0": "他心智者。",
    "T48n2016_064:0777a14_1": "謂既有他人心為自心之所知。",
    "T48n2016_064:0777a14_2": "即是離自心外。",
    "T48n2016_064:0777a15_3": "有他人心為自心之境。",
    "T48n2016_064:0777a15_4": "何得言無境唯有識耶。",
    "T48n2016_064:0777a16_5": "答。",
    "T48n2016_064:0777a16_6": "謂緣他身扶塵根相分色。",
    "T48n2016_064:0777a17_0": "亦不親得。",
    "T48n2016_064:0777a17_1": "但託為質。",
    "T48n2016_064:0777a17_2": "如自身眼識緣第八識所變器世間色時。",
    "T48n2016_064:0777a18_3": "亦但託為質。",
    "T48n2016_064:0777a18_4": "亦不親得。",
    "T48n2016_064:0777a18_5": "其耳等四識。",
    "T48n2016_064:0777a19_6": "緣本識所變聲等。",
    "T48n2016_064:0777a19_7": "亦耳以本質是第八識變。",
    "T48n2016_064:0777a20_8": "今望五識。",
    "T48n2016_064:0777a20_9": "故名影識。",
    "T48n2016_064:0777a20_10": "如五識等緣本識所變本質境。",
    "T48n2016_064:0777a21_11": "亦不親得。",
    "T48n2016_064:0777a21_12": "雖亦得緣。",
    "T48n2016_064:0777a21_13": "只成疎所緣緣。",
    "T48n2016_064:0777a22_14": "若如實知即是佛境者。",
    "T48n2016_064:0777a22_15": "論云。",
    "T48n2016_064:0777a22_16": "二智於境。",
    "T48n2016_064:0777a23_17": "各各由無知所覆蔽故。",
    "T48n2016_064:0777a23_18": "不知如佛所行。",
    "T48n2016_064:0777a24_0": "不可言境。",
    "T48n2016_064:0777a24_1": "此有二解。",
    "T48n2016_064:0777a24_2": "一云。",
    "T48n2016_064:0777a24_3": "是真如妙理。",
    "T48n2016_064:0777a24_4": "言詮不及。",
    "T48n2016_064:0777a25_5": "不可言境。",
    "T48n2016_064:0777a25_6": "謂此離言真如之境。",
    "T48n2016_064:0777a25_7": "唯佛獨能顯了分別證。",
    "T48n2016_064:0777a26_8": "餘不能證者。",
    "T48n2016_064:0777a26_9": "由第七恒行不共無明所覆。",
    "T48n2016_064:0777a27_10": "故不知。",
    "T48n2016_064:0777a27_11": "二云。",
    "T48n2016_064:0777a27_12": "不可言境者。",
    "T48n2016_064:0777a27_13": "即他心智境。",
    "T48n2016_064:0777a28_14": "及自心智境。",
    "T48n2016_064:0777a28_15": "此二智。",
    "T48n2016_064:0777a28_16": "名不可言境。",
    "T48n2016_064:0777a29_0": "謂真如自相。",
    "T48n2016_064:0777a29_1": "假智及詮。",
    "T48n2016_064:0777a29_2": "俱非境故。",
    "T48n2016_064:0777a29_3": "詮謂名言能詮之名。",
    "T48n2016_064:0777b01_4": "既不得自相。",
    "T48n2016_064:0777b01_5": "即顯自他二智之境。",
    "T48n2016_064:0777b01_6": "是佛智所行。",
    "T48n2016_064:0777b02_7": "不可言境。",
    "T48n2016_064:0777b02_8": "由此二智所知之境自相。",
    "T48n2016_064:0777b03_9": "是佛智所行。",
    "T48n2016_064:0777b03_10": "不可言境。",
    "T48n2016_064:0777b03_11": "餘人由恒行不共無明所覆蔽。",
    "T48n2016_064:0777b04_12": "故不得如實而知也。",
    "T48n2016_064:0777b04_13": "又既言此人緣他人心時。",
    "T48n2016_064:0777b05_14": "託他人心為質。",
    "T48n2016_064:0777b05_15": "自變相分緣者。",
    "T48n2016_064:0777b06_16": "即相分不離此人心。",
    "T48n2016_064:0777b06_17": "是唯識。",
    "T48n2016_064:0777b06_18": "若他人心本質緣不著者。",
    "T48n2016_064:0777b07_19": "即離此人心外。",
    "T48n2016_064:0777b07_20": "有他人心。",
    "T48n2016_064:0777b07_21": "何成唯識耶。",
    "T48n2016_064:0777b08_22": "因此便申第九異境非識難。",
    "T48n2016_064:0777b08_23": "小乘云。",
    "T48n2016_064:0777b09_0": "唯識之義。",
    "T48n2016_064:0777b09_1": "但離心之外更無一物。",
    "T48n2016_064:0777b09_2": "方名唯識。",
    "T48n2016_064:0777b10_0": "既他人心。",
    "T48n2016_064:0777b10_1": "異此人心為境。",
    "T48n2016_064:0777b10_2": "何成唯識耶。",
    "T48n2016_064:0777b10_3": "又他人境。",
    "T48n2016_064:0777b11_4": "亦異此境。",
    "T48n2016_064:0777b11_5": "即離此人心外有異境。",
    "T48n2016_064:0777b11_6": "何成唯識。",
    "T48n2016_064:0777b12_7": "答責云。",
    "T48n2016_064:0777b12_8": "奇哉固執。",
    "T48n2016_064:0777b12_9": "觸處生疑。",
    "T48n2016_064:0777b12_10": "豈唯識言。",
    "T48n2016_064:0777b13_0": "但說一識。",
    "T48n2016_064:0777b13_1": "汝小乘何以此堅執處處生疑。",
    "T48n2016_064:0777b13_2": "豈唯識之言。",
    "T48n2016_064:0777b14_3": "但說一人之識。",
    "T48n2016_064:0777b14_4": "若言有一人之識者。",
    "T48n2016_064:0777b15_5": "即豈有凡聖尊卑。",
    "T48n2016_064:0777b15_6": "若無佛者。",
    "T48n2016_064:0777b15_7": "眾生何求。",
    "T48n2016_064:0777b15_8": "若無凡夫。",
    "T48n2016_064:0777b16_9": "佛為誰說。",
    "T48n2016_064:0777b16_10": "應知我唯識言。",
    "T48n2016_064:0777b16_11": "有深旨趣。",
    "T48n2016_064:0777b17_0": "論云。",
    "T48n2016_064:0777b17_1": "唯識言。",
    "T48n2016_064:0777b17_2": "總顯一切有情。",
    "T48n2016_064:0777b17_3": "各有八識。",
    "T48n2016_064:0777b17_4": "六位心所。",
    "T48n2016_064:0777b18_5": "所變相分分位差別。",
    "T48n2016_064:0777b18_6": "及彼空理所顯真如。",
    "T48n2016_064:0777b19_7": "言識之一字者。",
    "T48n2016_064:0777b19_8": "非是一人之識。",
    "T48n2016_064:0777b19_9": "總顯一切有情。",
    "T48n2016_064:0777b20_10": "各各皆有八識。",
    "T48n2016_064:0777b20_11": "即是識之自體。",
    "T48n2016_064:0777b20_12": "五十一心所。",
    "T48n2016_064:0777b21_13": "識之相應。",
    "T48n2016_064:0777b21_14": "何獨執一人之識。",
    "T48n2016_064:0777b21_15": "問。",
    "T48n2016_064:0777b21_16": "維摩詰即入三昧。",
    "T48n2016_064:0777b22_17": "令此比丘自識宿命。",
    "T48n2016_064:0777b22_18": "曾於五百佛所殖眾德本。",
    "T48n2016_064:0777b23_19": "迴向阿耨多羅三藐三菩提。",
    "T48n2016_064:0777b24_0": "即時豁然。",
    "T48n2016_064:0777b24_1": "還得本心者。",
    "T48n2016_064:0777b24_2": "且如過去心已過去。",
    "T48n2016_064:0777b25_0": "未來心未至。",
    "T48n2016_064:0777b25_1": "現在心不住。",
    "T48n2016_064:0777b25_2": "云何觀他過去善根心。",
    "T48n2016_064:0777b26_3": "答。",
    "T48n2016_064:0777b26_4": "約真即無。",
    "T48n2016_064:0777b26_5": "隨俗故有。",
    "T48n2016_064:0777b26_6": "一念心起。",
    "T48n2016_064:0777b26_7": "尚具十世四運分別。",
    "T48n2016_064:0777b27_8": "不可作龜毛兔角斷滅之見。",
    "T48n2016_064:0777b28_9": "過去之法。",
    "T48n2016_064:0777b28_10": "雖念念不住。",
    "T48n2016_064:0777b28_11": "然皆熏在第八識中。",
    "T48n2016_064:0777b29_12": "有過去種子。",
    "T48n2016_064:0777b29_13": "知過去事者。",
    "T48n2016_064:0777b29_14": "過去所熏得種。",
    "T48n2016_064:0777c01_0": "現在阿賴耶識自證分中含藏。",
    "T48n2016_064:0777c01_1": "然過去世時。",
    "T48n2016_064:0777c01_2": "雖即無體。",
    "T48n2016_064:0777c02_3": "但將識中種為本質。",
    "T48n2016_064:0777c02_4": "變影而緣。",
    "T48n2016_064:0777c02_5": "即知過去世事。",
    "T48n2016_064:0777c03_6": "此帶質境知也。",
    "T48n2016_064:0777c03_7": "或云。",
    "T48n2016_064:0777c03_8": "可緣心上影像相者。",
    "T48n2016_064:0777c04_9": "即第六意識見分之上。",
    "T48n2016_064:0777c04_10": "變起過去影像相而知也。",
    "T48n2016_064:0777c05_11": "此即獨影境。",
    "T48n2016_064:0777c05_12": "謂過去無體無本質也。",
    "T48n2016_064:0777c06_13": "又過去之法若不落謝。",
    "T48n2016_064:0777c06_14": "不名過去。",
    "T48n2016_064:0777c06_15": "若已落謝。",
    "T48n2016_064:0777c07_16": "無法可知。",
    "T48n2016_064:0777c07_17": "若但曾逕心中。",
    "T48n2016_064:0777c07_18": "有種影現前。",
    "T48n2016_064:0777c08_0": "故說憶知者。",
    "T48n2016_064:0777c08_1": "是則但見自心。",
    "T48n2016_064:0777c08_2": "不見彼法。",
    "T48n2016_064:0777c08_3": "如月燈三昧經云。",
    "T48n2016_064:0777c09_4": "佛言。",
    "T48n2016_064:0777c09_5": "云何菩薩摩訶薩。",
    "T48n2016_064:0777c09_6": "得過去未來現在智藏。",
    "T48n2016_064:0777c10_7": "童子。",
    "T48n2016_064:0777c10_8": "是菩薩如實知一切眾生心行。",
    "T48n2016_064:0777c11_9": "準自心行次第所起。",
    "T48n2016_064:0777c11_10": "觀自心法。",
    "T48n2016_064:0777c11_11": "以無亂想修習方便。",
    "T48n2016_064:0777c12_12": "如自心行。",
    "T48n2016_064:0777c12_13": "類他亦爾。",
    "T48n2016_064:0777c12_14": "隨所見色聞聲。",
    "T48n2016_064:0777c13_15": "有愛無愛。",
    "T48n2016_064:0777c13_16": "心皆如實知。",
    "T48n2016_064:0777c13_17": "童子。",
    "T48n2016_064:0777c13_18": "是名菩薩得過去未來現在知藏。",
    "T48n2016_064:0777c14_19": "問。",
    "T48n2016_064:0777c14_20": "觀他心智者。",
    "T48n2016_064:0777c14_21": "為實知他心。",
    "T48n2016_064:0777c15_22": "為不實知。",
    "T48n2016_064:0777c15_23": "二俱有過。",
    "T48n2016_064:0777c15_24": "答。",
    "T48n2016_064:0777c15_25": "如前已說。",
    "T48n2016_064:0777c16_26": "若立自他。",
    "T48n2016_064:0777c16_27": "於宗俱失。",
    "T48n2016_064:0777c16_28": "此皆約世諦識心分別故。",
    "T48n2016_064:0777c17_29": "識論頌云。",
    "T48n2016_064:0777c17_30": "他心知於境。",
    "T48n2016_064:0777c17_31": "不如實覺知。",
    "T48n2016_064:0777c17_32": "以非離識境。",
    "T48n2016_064:0777c18_33": "唯佛如實知。",
    "T48n2016_064:0777c18_34": "他心智者。",
    "T48n2016_064:0777c18_35": "不如實知。",
    "T48n2016_064:0777c19_0": "以自內心。",
    "T48n2016_064:0777c19_1": "虛妄分別。",
    "T48n2016_064:0777c19_2": "以為他心。",
    "T48n2016_064:0777c19_3": "以自心意。",
    "T48n2016_064:0777c19_4": "意識雜故。",
    "T48n2016_064:0777c20_5": "如彼佛地如實果體。",
    "T48n2016_064:0777c20_6": "無言語處勝妙境界。",
    "T48n2016_064:0777c21_7": "唯佛能知。",
    "T48n2016_064:0777c21_8": "餘人不知。",
    "T48n2016_064:0777c21_9": "以彼世間他心智者。",
    "T48n2016_064:0777c22_10": "於彼二法不如實知。",
    "T48n2016_064:0777c22_11": "以彼能取所取境界虛妄分別故。",
    "T48n2016_064:0777c23_12": "此唯是識。",
    "T48n2016_064:0777c23_13": "無量無邊甚深境界。",
    "T48n2016_064:0777c24_0": "非是心識可測量故。",
    "T48n2016_064:0777c24_1": "如上約法相宗說。",
    "T48n2016_064:0777c24_2": "若約法性宗。",
    "T48n2016_064:0777c25_3": "先德云。",
    "T48n2016_064:0777c25_4": "知他心者。",
    "T48n2016_064:0777c25_5": "皆如實知。",
    "T48n2016_064:0777c25_6": "審於事實。",
    "T48n2016_064:0777c26_7": "見理實故。",
    "T48n2016_064:0777c26_8": "亦非心外可見。",
    "T48n2016_064:0777c26_9": "亦非無境可知。",
    "T48n2016_064:0777c27_0": "若自他相絕。",
    "T48n2016_064:0777c27_1": "則與眾生心同一體。",
    "T48n2016_064:0777c27_2": "故無心外也。",
    "T48n2016_064:0777c28_3": "不壞所。",
    "T48n2016_064:0777c28_4": "故能知也。",
    "T48n2016_064:0777c28_5": "又他心者。",
    "T48n2016_064:0777c28_6": "安慧云。",
    "T48n2016_064:0777c28_7": "佛智緣他心。",
    "T48n2016_064:0777c29_8": "緣得本質。",
    "T48n2016_064:0777c29_9": "餘皆變影。",
    "T48n2016_064:0777c29_10": "若緣本質得心外法。",
    "T48n2016_064:0778a01_11": "壞唯識故。",
    "T48n2016_064:0778a01_12": "今以攝境唯心。",
    "T48n2016_064:0778a01_13": "不壞境故。",
    "T48n2016_064:0778a01_14": "能所兩亡。",
    "T48n2016_064:0778a02_15": "不礙存故。",
    "T48n2016_064:0778a02_16": "第一義唯心。",
    "T48n2016_064:0778a02_17": "非一非異。",
    "T48n2016_064:0778a02_18": "正緣他時。",
    "T48n2016_064:0778a03_19": "即是自故。",
    "T48n2016_064:0778a03_20": "以即佛心之眾生心為所緣。",
    "T48n2016_064:0778a04_21": "非即眾生心之佛心。",
    "T48n2016_064:0778a04_22": "即眾生心之佛心為能緣。",
    "T48n2016_064:0778a05_23": "非即佛心之眾生心。",
    "T48n2016_064:0778a05_24": "如是鎔融。",
    "T48n2016_064:0778a05_25": "非一非異。",
    "T48n2016_064:0778a06_26": "若離佛外。",
    "T48n2016_064:0778a06_27": "別有眾生。",
    "T48n2016_064:0778a06_28": "更須變影。",
    "T48n2016_064:0778a06_29": "却失真唯識義。",
    "T48n2016_064:0778a07_30": "釋云。",
    "T48n2016_064:0778a07_31": "攝境從心。",
    "T48n2016_064:0778a07_32": "不壞境者。",
    "T48n2016_064:0778a07_33": "即示心境有無。",
    "T48n2016_064:0778a08_34": "彼得本質。",
    "T48n2016_064:0778a08_35": "恐壞唯心。",
    "T48n2016_064:0778a08_36": "既不壞境。",
    "T48n2016_064:0778a08_37": "得之何妨。",
    "T48n2016_064:0778a09_0": "壞有何失。",
    "T48n2016_064:0778a09_1": "以無心者。",
    "T48n2016_064:0778a09_2": "無心於萬物。",
    "T48n2016_064:0778a09_3": "萬物未嘗無。",
    "T48n2016_064:0778a10_4": "此得在於神靜。",
    "T48n2016_064:0778a10_5": "失在於物虛。",
    "T48n2016_064:0778a10_6": "謂物實有故。",
    "T48n2016_064:0778a11_7": "若唯心壞境。",
    "T48n2016_064:0778a11_8": "則得在於境空。",
    "T48n2016_064:0778a11_9": "失在於心有。",
    "T48n2016_064:0778a12_0": "故以境由心變。",
    "T48n2016_064:0778a12_1": "故說唯心。",
    "T48n2016_064:0778a12_2": "所變不無。",
    "T48n2016_064:0778a12_3": "何必須壞。",
    "T48n2016_064:0778a13_4": "若以緣生無性。",
    "T48n2016_064:0778a13_5": "則心境兩亡。",
    "T48n2016_064:0778a13_6": "故借心以遣境。",
    "T48n2016_064:0778a14_7": "境遣而心亡。",
    "T48n2016_064:0778a14_8": "非獨存心矣。",
    "T48n2016_064:0778a14_9": "若能所兩亡。",
    "T48n2016_064:0778a14_10": "不礙存故者。",
    "T48n2016_064:0778a15_11": "上不壞境。",
    "T48n2016_064:0778a15_12": "且遣懼質之病。",
    "T48n2016_064:0778a15_13": "今遣空有之理故。",
    "T48n2016_064:0778a16_14": "心境並許存亡。",
    "T48n2016_064:0778a16_15": "心境因藉故空。",
    "T48n2016_064:0778a16_16": "相依緣生故有。",
    "T48n2016_064:0778a17_17": "有即存也。",
    "T48n2016_064:0778a17_18": "空即亡也。",
    "T48n2016_064:0778a17_19": "空有交徹。",
    "T48n2016_064:0778a18_0": "存亡兩全。",
    "T48n2016_064:0778a18_1": "云第一義唯心。",
    "T48n2016_064:0778a18_2": "非一非異者。",
    "T48n2016_064:0778a18_3": "正。",
    "T48n2016_064:0778a18_4": "出具分唯心之理。",
    "T48n2016_064:0778a19_5": "上第一釋。",
    "T48n2016_064:0778a19_6": "雖有唯心之義。",
    "T48n2016_064:0778a19_7": "尚通生滅唯心。",
    "T48n2016_064:0778a20_8": "第二義。",
    "T48n2016_064:0778a20_9": "雖兩亡不羈。",
    "T48n2016_064:0778a20_10": "而未言心境相攝。",
    "T48n2016_064:0778a21_11": "今明具分唯識。",
    "T48n2016_064:0778a21_12": "故云第一義唯心。",
    "T48n2016_064:0778a21_13": "同第一義。",
    "T48n2016_064:0778a22_14": "故非異。",
    "T48n2016_064:0778a22_15": "不壞能所。",
    "T48n2016_064:0778a22_16": "故非一。",
    "T48n2016_064:0778a22_17": "非一故。",
    "T48n2016_064:0778a22_18": "有能所。",
    "T48n2016_064:0778a23_19": "緣他義成矣。",
    "T48n2016_064:0778a23_20": "非異故。",
    "T48n2016_064:0778a23_21": "能所平等。",
    "T48n2016_064:0778a23_22": "唯心義成矣。",
    "T48n2016_064:0778a24_23": "云正緣他時。",
    "T48n2016_064:0778a24_24": "即是自故者。",
    "T48n2016_064:0778a24_25": "結成得於本質。",
    "T48n2016_064:0778a25_26": "無心外過。",
    "T48n2016_064:0778a25_27": "以即自故。",
    "T48n2016_064:0778a25_28": "不失唯識。",
    "T48n2016_064:0778a25_29": "云以即佛心之眾生心。",
    "T48n2016_064:0778a26_30": "正示法性他心之相。",
    "T48n2016_064:0778a26_31": "此有兩對語。",
    "T48n2016_064:0778a27_32": "前對明所緣。",
    "T48n2016_064:0778a27_33": "後對明能緣。",
    "T48n2016_064:0778a27_34": "今初言即佛心之眾生心者。",
    "T48n2016_064:0778a28_35": "此明所緣。",
    "T48n2016_064:0778a28_36": "眾生心即是佛心。",
    "T48n2016_064:0778a28_37": "此明不異。",
    "T48n2016_064:0778a29_38": "次云非即眾生心之佛心者。",
    "T48n2016_064:0778a29_39": "此句明眾生心與佛心非即。",
    "T48n2016_064:0778b01_40": "非即。",
    "T48n2016_064:0778b01_41": "故有所緣義。",
    "T48n2016_064:0778b01_42": "非異。",
    "T48n2016_064:0778b02_0": "故不壞唯心義。",
    "T48n2016_064:0778b02_1": "言為所緣者。",
    "T48n2016_064:0778b02_2": "結成心緣。",
    "T48n2016_064:0778b02_3": "簡非能緣也。",
    "T48n2016_064:0778b03_4": "次下辯能緣。",
    "T48n2016_064:0778b03_5": "云以即眾生心之佛心者。",
    "T48n2016_064:0778b04_6": "此句明能緣。",
    "T48n2016_064:0778b04_7": "佛心即是眾生心。",
    "T48n2016_064:0778b04_8": "此明非異。",
    "T48n2016_064:0778b05_9": "次云非即佛心之眾生心者。",
    "T48n2016_064:0778b05_10": "此明佛心與眾生心有非一義。",
    "T48n2016_064:0778b06_11": "非一故為能緣。",
    "T48n2016_064:0778b06_12": "非異。",
    "T48n2016_064:0778b06_13": "故不壞唯識之義。",
    "T48n2016_064:0778b07_14": "言為能緣者。",
    "T48n2016_064:0778b07_15": "結成能緣。",
    "T48n2016_064:0778b07_16": "簡非所緣也。",
    "T48n2016_064:0778b08_17": "更以喻況。",
    "T48n2016_064:0778b08_18": "如水和乳。",
    "T48n2016_064:0778b08_19": "乳為所和。",
    "T48n2016_064:0778b08_20": "喻眾生心是所緣。",
    "T48n2016_064:0778b09_21": "水為能和。",
    "T48n2016_064:0778b09_22": "喻佛心為能緣。",
    "T48n2016_064:0778b09_23": "以此二和合。",
    "T48n2016_064:0778b10_24": "如似一味。",
    "T48n2016_064:0778b10_25": "鵝王啑之。",
    "T48n2016_064:0778b10_26": "乳盡水存。",
    "T48n2016_064:0778b10_27": "則知非一。",
    "T48n2016_064:0778b11_28": "然此水名即乳之水。",
    "T48n2016_064:0778b11_29": "此乳名即水之乳。",
    "T48n2016_064:0778b12_0": "二雖相即。",
    "T48n2016_064:0778b12_1": "而有不一之義。",
    "T48n2016_064:0778b12_2": "故應喻云。",
    "T48n2016_064:0778b12_3": "以即水之乳。",
    "T48n2016_064:0778b13_4": "非即乳之水為所和。",
    "T48n2016_064:0778b13_5": "以即乳之水。",
    "T48n2016_064:0778b13_6": "非即水之乳。",
    "T48n2016_064:0778b14_7": "為能和。",
    "T48n2016_064:0778b14_8": "義可知矣。",
    "T48n2016_064:0778b14_9": "云如是鎔融。",
    "T48n2016_064:0778b14_10": "非一非異者。",
    "T48n2016_064:0778b15_11": "結成正義。",
    "T48n2016_064:0778b15_12": "若離佛外。",
    "T48n2016_064:0778b15_13": "結彈護法。",
    "T48n2016_064:0778b15_14": "言却失真唯識者。",
    "T48n2016_064:0778b16_15": "不知外質即佛心故。",
    "T48n2016_064:0778b16_16": "又諸佛如來。",
    "T48n2016_064:0778b17_17": "隨多心念。",
    "T48n2016_064:0778b17_18": "意能頓了。",
    "T48n2016_064:0778b17_19": "如金剛經云。",
    "T48n2016_064:0778b17_20": "爾所國土中。",
    "T48n2016_064:0778b18_21": "所有眾生若干種心。",
    "T48n2016_064:0778b18_22": "如來悉知。",
    "T48n2016_064:0778b18_23": "華嚴經頌云。",
    "T48n2016_064:0778b19_24": "無量億劫勤修學。",
    "T48n2016_064:0778b19_25": "得是無上菩提智。",
    "T48n2016_064:0778b19_26": "云何不於一念中。",
    "T48n2016_064:0778b20_27": "善知一切眾生心。",
    "T48n2016_064:0778b20_28": "此是意圓對。",
    "T48n2016_064:0778b21_29": "如來一念之中。",
    "T48n2016_064:0778b21_30": "皆一時頓應。",
    "T48n2016_064:0778b21_31": "無一不應。",
    "T48n2016_064:0778b21_32": "故名圓對。",
    "T48n2016_064:0778b22_33": "斯乃了心非心。",
    "T48n2016_064:0778b22_34": "方能遍應。",
    "T48n2016_064:0778b22_35": "若心在有無。",
    "T48n2016_064:0778b23_36": "則成隔礙。",
    "T48n2016_064:0778b23_37": "故金剛經云。",
    "T48n2016_064:0778b23_38": "如來說諸心。",
    "T48n2016_064:0778b23_39": "皆為非心。",
    "T48n2016_064:0778b24_40": "是名為心。",
    "T48n2016_064:0778b24_41": "華嚴論問。",
    "T48n2016_064:0778b24_42": "何謂諸佛知眾生心時與非時。",
    "T48n2016_064:0778b25_43": "答曰。",
    "T48n2016_064:0778b25_44": "以如來心與一切眾生心。",
    "T48n2016_064:0778b26_0": "本不異故。",
    "T48n2016_064:0778b26_1": "是一心一智慧故。",
    "T48n2016_064:0778b26_2": "以此知時與非時。",
    "T48n2016_064:0778b27_3": "諸佛悟了。",
    "T48n2016_064:0778b27_4": "而與眾生共之。",
    "T48n2016_064:0778b27_5": "眾生迷。",
    "T48n2016_064:0778b27_6": "自謂為隔。",
    "T48n2016_064:0778b28_7": "一切諸佛。",
    "T48n2016_064:0778b28_8": "以一切眾生心智慧而成正覺。",
    "T48n2016_064:0778b29_0": "一切眾生。",
    "T48n2016_064:0778b29_1": "迷諸佛智慧而作眾生。",
    "T48n2016_064:0778b29_2": "及至成佛時。",
    "T48n2016_064:0778c01_3": "還成眾生迷理之佛。",
    "T48n2016_064:0778c01_4": "所說法門。",
    "T48n2016_064:0778c01_5": "還解眾生心裏迷佛眾生。",
    "T48n2016_064:0778c02_6": "以此不異故。",
    "T48n2016_064:0778c02_7": "知眾生心。",
    "T48n2016_064:0778c02_8": "又問曰。",
    "T48n2016_064:0778c03_9": "大眾何不以言自問。",
    "T48n2016_064:0778c03_10": "因何默念致疑。",
    "T48n2016_064:0778c03_11": "何不自以言讚勸請。",
    "T48n2016_064:0778c04_12": "云何供養雲出音請佛。",
    "T48n2016_064:0778c04_13": "答曰。",
    "T48n2016_064:0778c05_0": "明佛得法界心。",
    "T48n2016_064:0778c05_1": "與一切眾生同心故。",
    "T48n2016_064:0778c05_2": "以心不異故。",
    "T48n2016_064:0778c06_3": "知彼心疑。",
    "T48n2016_064:0778c06_4": "供具說頌者。",
    "T48n2016_064:0778c06_5": "明一切法。",
    "T48n2016_064:0778c06_6": "總法界體也。",
    "T48n2016_064:0778c07_7": "法界不思議。",
    "T48n2016_064:0778c07_8": "一切法不思議故。",
    "T48n2016_064:0778c07_9": "明聖眾心境無二故。",
    "T48n2016_064:0778c08_10": "凡夫迷法界。",
    "T48n2016_064:0778c08_11": "自見心境有二故。",
    "T48n2016_064:0778c09_12": "即顛倒生也。",
    "T48n2016_064:0778c09_13": "又云。",
    "T48n2016_064:0778c09_14": "心無內外中間。",
    "T48n2016_064:0778c09_15": "萬法自他同體。",
    "T48n2016_064:0778c10_16": "一亦不一。",
    "T48n2016_064:0778c10_17": "他亦不他。",
    "T48n2016_064:0778c10_18": "故知凡聖同一真心。",
    "T48n2016_064:0778c11_19": "眾生妄隔而不知。",
    "T48n2016_064:0778c11_20": "諸佛契同而頓了。",
    "T48n2016_064:0778c11_21": "如鏡面照而鏡背昏。",
    "T48n2016_064:0778c12_22": "俱一銅體。",
    "T48n2016_064:0778c12_23": "而分明昧。",
    "T48n2016_064:0778c12_24": "猶河水清而河泥濁。",
    "T48n2016_064:0778c13_25": "在一濕性。",
    "T48n2016_064:0778c13_26": "而有混澄。",
    "T48n2016_064:0778c13_27": "凡心聖心。",
    "T48n2016_064:0778c14_28": "可喻斯旨。",
    "T48n2016_064:0778c14_29": "問。",
    "T48n2016_064:0778c14_30": "眾生緣佛身時。",
    "T48n2016_064:0778c14_31": "是識所變。",
    "T48n2016_064:0778c15_0": "只如佛緣所化有情身土之時。",
    "T48n2016_064:0778c15_1": "是何所變。",
    "T48n2016_064:0778c16_0": "答。",
    "T48n2016_064:0778c16_1": "若眾生見佛。",
    "T48n2016_064:0778c16_2": "是有漏轉識所變相分。",
    "T48n2016_064:0778c16_3": "等流色攝。",
    "T48n2016_064:0778c17_4": "若佛緣有情。",
    "T48n2016_064:0778c17_5": "是無漏智所變。",
    "T48n2016_064:0778c17_6": "定果色攝。",
    "T48n2016_064:0778c18_0": "識智雖殊。",
    "T48n2016_064:0778c18_1": "俱不出自心之境。",
    "T48n2016_064:0778c18_2": "並是增上緣力。",
    "T48n2016_064:0778c19_0": "互令心現。",
    "T48n2016_064:0778c19_1": "如義天鈔云。",
    "T48n2016_064:0778c19_2": "依大乘宗。",
    "T48n2016_064:0778c19_3": "通說。",
    "T48n2016_064:0778c19_4": "依於他身。",
    "T48n2016_064:0778c20_5": "及非情法。",
    "T48n2016_064:0778c20_6": "謂以自心緣他身時。",
    "T48n2016_064:0778c20_7": "不親緣彼。",
    "T48n2016_064:0778c21_8": "但緣自識所變相分。",
    "T48n2016_064:0778c21_9": "為親所緣。",
    "T48n2016_064:0778c21_10": "此相分色。",
    "T48n2016_064:0778c22_0": "雖託他。",
    "T48n2016_064:0778c22_1": "身本質而起。",
    "T48n2016_064:0778c22_2": "然非依彼他識而生。",
    "T48n2016_064:0778c22_3": "由自識中種子生故。",
    "T48n2016_064:0778c23_4": "故此相分等流色攝。",
    "T48n2016_064:0778c23_5": "是五塵色之流類故。",
    "T48n2016_064:0778c24_6": "託他為質。",
    "T48n2016_064:0778c24_7": "方變影像。",
    "T48n2016_064:0778c24_8": "是增上緣。",
    "T48n2016_064:0778c25_9": "此所變相分。",
    "T48n2016_064:0778c25_10": "從自種生。",
    "T48n2016_064:0778c25_11": "是因緣義。",
    "T48n2016_064:0778c25_12": "即顯自心緣得他身。",
    "T48n2016_064:0778c26_13": "得依現行處有。",
    "T48n2016_064:0778c26_14": "是於他身現行成就。",
    "T48n2016_064:0778c27_15": "以從自心種子生故。",
    "T48n2016_064:0778c27_16": "亦是依種建立。",
    "T48n2016_064:0778c27_17": "於得即種子成就也。",
    "T48n2016_064:0778c28_18": "以此理故。",
    "T48n2016_064:0778c28_19": "有情見佛色身之時。",
    "T48n2016_064:0778c29_20": "所緣佛身。",
    "T48n2016_064:0778c29_21": "唯是有漏自識變故。",
    "T48n2016_064:0778c29_22": "自種生故。",
    "T48n2016_064:0779a01_23": "等流色攝。",
    "T48n2016_064:0779a01_24": "緣佛所變淨土亦爾。",
    "T48n2016_064:0779a01_25": "若佛緣所化有情色身。",
    "T48n2016_064:0779a02_26": "及穢土時。",
    "T48n2016_064:0779a02_27": "所變相分。",
    "T48n2016_064:0779a02_28": "皆是無漏。",
    "T48n2016_064:0779a03_0": "無實有情離染等用。",
    "T48n2016_064:0779a03_1": "如鏡中像。",
    "T48n2016_064:0779a03_2": "全是明鏡。",
    "T48n2016_064:0779a03_3": "無漏定果色攝。",
    "T48n2016_064:0779a04_4": "亦是等流色收。",
    "T48n2016_064:0779a04_5": "是外五塵之流類故。",
    "T48n2016_064:0779a05_6": "佛識變故。",
    "T48n2016_064:0779a05_7": "無垢識中淨種生故。",
    "T48n2016_064:0779a05_8": "問。",
    "T48n2016_064:0779a05_9": "若論一心無外境界。",
    "T48n2016_064:0779a06_10": "如前九難。",
    "T48n2016_064:0779a06_11": "答已分明。",
    "T48n2016_064:0779a06_12": "則眼際無色。",
    "T48n2016_064:0779a07_13": "耳外無聲。",
    "T48n2016_064:0779a07_14": "如今所見所聞。",
    "T48n2016_064:0779a07_15": "為當是一。",
    "T48n2016_064:0779a08_0": "為當是二。",
    "T48n2016_064:0779a08_1": "為復是有。",
    "T48n2016_064:0779a08_2": "為復是無。",
    "T48n2016_064:0779a08_3": "若言是一則壞能所。",
    "T48n2016_064:0779a09_4": "若言是二又違自宗。",
    "T48n2016_064:0779a09_5": "若言是有。",
    "T48n2016_064:0779a09_6": "根境常虛。",
    "T48n2016_064:0779a10_7": "若言是無。",
    "T48n2016_064:0779a10_8": "現見不濫。",
    "T48n2016_064:0779a10_9": "如何融會。",
    "T48n2016_064:0779a10_10": "得契斯旨。",
    "T48n2016_064:0779a11_11": "答。",
    "T48n2016_064:0779a11_12": "如大地一生種種芽。",
    "T48n2016_064:0779a11_13": "類八識心。",
    "T48n2016_064:0779a11_14": "現種種法。",
    "T48n2016_064:0779a12_15": "所觀是藏識之相分。",
    "T48n2016_064:0779a12_16": "能見是眼識之見分。",
    "T48n2016_064:0779a13_0": "能所雖分。",
    "T48n2016_064:0779a13_1": "俱不離識。",
    "T48n2016_064:0779a13_2": "皆是現量。",
    "T48n2016_064:0779a13_3": "不帶名言。",
    "T48n2016_064:0779a13_4": "則非有非空。",
    "T48n2016_064:0779a14_5": "非一非二。",
    "T48n2016_064:0779a14_6": "若落比量。",
    "T48n2016_064:0779a14_7": "執作外塵。",
    "T48n2016_064:0779a14_8": "則一二情生。",
    "T48n2016_064:0779a15_9": "內外心起。",
    "T48n2016_064:0779a15_10": "密嚴經偈云。",
    "T48n2016_064:0779a15_11": "如地無分別。",
    "T48n2016_064:0779a16_12": "庶物依以生。",
    "T48n2016_064:0779a16_13": "藏識亦如是。",
    "T48n2016_064:0779a16_14": "眾境之依處。",
    "T48n2016_064:0779a16_15": "如人以己手。",
    "T48n2016_064:0779a17_16": "還自摩挃身。",
    "T48n2016_064:0779a17_17": "亦如象與鼻。",
    "T48n2016_064:0779a17_18": "取水自霑沐。",
    "T48n2016_064:0779a18_19": "復似諸嬰兒。",
    "T48n2016_064:0779a18_20": "以口含其指。",
    "T48n2016_064:0779a18_21": "如是自心內。",
    "T48n2016_064:0779a19_22": "現境還自緣。",
    "T48n2016_064:0779a19_23": "是心之境界。",
    "T48n2016_064:0779a19_24": "普遍於三有。",
    "T48n2016_064:0779a19_25": "久修觀行者。",
    "T48n2016_064:0779a20_26": "而能善通達。",
    "T48n2016_064:0779a20_27": "內外諸世間。",
    "T48n2016_064:0779a20_28": "一切唯心現。",
    "T48n2016_064:0779a21_29": "華嚴經頌云。",
    "T48n2016_064:0779a21_30": "譬如深大海。",
    "T48n2016_064:0779a21_31": "珍寶不可盡。",
    "T48n2016_064:0779a22_0": "於中悉顯現。",
    "T48n2016_064:0779a22_1": "眾生之形影。",
    "T48n2016_064:0779a22_2": "甚深因緣海。",
    "T48n2016_064:0779a22_3": "功德悉無盡。",
    "T48n2016_064:0779a23_4": "清淨法身中。",
    "T48n2016_064:0779a23_5": "無像而不現。",
    "T48n2016_064:0779a23_6": "正法念處經云。",
    "T48n2016_064:0779a24_7": "又修行者。",
    "T48n2016_064:0779a24_8": "內心思惟。",
    "T48n2016_064:0779a24_9": "隨順正法。",
    "T48n2016_064:0779a24_10": "觀察法行。",
    "T48n2016_064:0779a25_11": "乃至云何世間愚癡凡夫。",
    "T48n2016_064:0779a25_12": "眼見色已。",
    "T48n2016_064:0779a25_13": "或貪或瞋。",
    "T48n2016_064:0779a26_14": "或生於癡。",
    "T48n2016_064:0779a26_15": "彼諸凡夫。",
    "T48n2016_064:0779a26_16": "若見知識。",
    "T48n2016_064:0779a26_17": "若見婦女。",
    "T48n2016_064:0779a27_18": "心則生貪。",
    "T48n2016_064:0779a27_19": "若復異見則生於瞋。",
    "T48n2016_064:0779a27_20": "見他具足貪瞋所覆。",
    "T48n2016_064:0779a28_21": "以眼於色。",
    "T48n2016_064:0779a28_22": "不如實見。",
    "T48n2016_064:0779a28_23": "癡蔽於心。",
    "T48n2016_064:0779a29_0": "愚癡凡夫。",
    "T48n2016_064:0779a29_1": "唯有分別。",
    "T48n2016_064:0779a29_2": "眼見於色。",
    "T48n2016_064:0779a29_3": "若貪若瞋。",
    "T48n2016_064:0779a29_4": "若癡所覆。",
    "T48n2016_064:0779b01_5": "愛誑之人。",
    "T48n2016_064:0779b01_6": "自意分別。",
    "T48n2016_064:0779b01_7": "此我我所。",
    "T48n2016_064:0779b01_8": "如是染著。",
    "T48n2016_064:0779b02_9": "譬如狗齩離肉之骨。",
    "T48n2016_064:0779b02_10": "涎汁和合。",
    "T48n2016_064:0779b02_11": "望得其髓。",
    "T48n2016_064:0779b03_12": "如是貪狗。",
    "T48n2016_064:0779b03_13": "齒間血出。",
    "T48n2016_064:0779b03_14": "得其味已。",
    "T48n2016_064:0779b03_15": "謂是骨汁。",
    "T48n2016_064:0779b04_0": "不知自血有如是味。",
    "T48n2016_064:0779b04_1": "以貪味故。",
    "T48n2016_064:0779b04_2": "不覺。",
    "T48n2016_064:0779b04_3": "次第自食其舌。",
    "T48n2016_064:0779b05_4": "復貪其味。",
    "T48n2016_064:0779b05_5": "以貪覆故。",
    "T48n2016_064:0779b05_6": "謂骨汁味。",
    "T48n2016_064:0779b05_7": "愚癡凡夫。",
    "T48n2016_064:0779b06_8": "亦復如是。",
    "T48n2016_064:0779b06_9": "虛妄分別。",
    "T48n2016_064:0779b06_10": "眼識見色。",
    "T48n2016_064:0779b06_11": "貪著喜樂。",
    "T48n2016_064:0779b07_12": "思量分別。",
    "T48n2016_064:0779b07_13": "以色枯骨。",
    "T48n2016_064:0779b07_14": "著眼口中。",
    "T48n2016_064:0779b07_15": "境界如齒。",
    "T48n2016_064:0779b08_0": "如是齩之。",
    "T48n2016_064:0779b08_1": "染意如涎。",
    "T48n2016_064:0779b08_2": "愛血流出。",
    "T48n2016_064:0779b08_3": "貪愛血味。",
    "T48n2016_064:0779b08_4": "為色為美。",
    "T48n2016_064:0779b09_5": "於色得味。",
    "T48n2016_064:0779b09_6": "猶如彼狗。",
    "T48n2016_064:0779b09_7": "凡夫愚癡。",
    "T48n2016_064:0779b09_8": "眼識見彼如骨之色。",
    "T48n2016_064:0779b10_9": "虛妄分別。",
    "T48n2016_064:0779b10_10": "如狗齩骨。",
    "T48n2016_064:0779b10_11": "如是觀察。",
    "T48n2016_064:0779b11_12": "眼見於色。",
    "T48n2016_064:0779b11_13": "猶如枯骨。",
    "T48n2016_064:0779b11_14": "如是一切愚癡凡夫。",
    "T48n2016_064:0779b12_0": "虛妄分別之所誑惑。",
    "T48n2016_064:0779b12_1": "又云。",
    "T48n2016_064:0779b12_2": "閻羅王說偈責疏罪人云。",
    "T48n2016_064:0779b13_3": "若屬邪見者。",
    "T48n2016_064:0779b13_4": "彼人非黠慧。",
    "T48n2016_064:0779b13_5": "一切地獄行。",
    "T48n2016_064:0779b14_6": "怨家心所誑。",
    "T48n2016_064:0779b14_7": "心是第一怨。",
    "T48n2016_064:0779b14_8": "此怨最為惡。",
    "T48n2016_064:0779b15_0": "此怨能縛人。",
    "T48n2016_064:0779b15_1": "送到閻羅處。",
    "T48n2016_064:0779b15_2": "故知諸苦所。",
    "T48n2016_064:0779b15_3": "困貪欲為本。",
    "T48n2016_064:0779b16_4": "若貪心瞥起。",
    "T48n2016_064:0779b16_5": "為五欲之火焚燒。",
    "T48n2016_064:0779b16_6": "覺意纔生。",
    "T48n2016_064:0779b17_7": "被三界之輪繫縛。",
    "T48n2016_064:0779b17_8": "如帝釋與脩羅戰勝。",
    "T48n2016_064:0779b18_9": "造得勝堂。",
    "T48n2016_064:0779b18_10": "七寶樓觀莊嚴奇特。",
    "T48n2016_064:0779b18_11": "梁柱榰[木*昂]皆容一綖。",
    "T48n2016_064:0779b19_12": "不相著而能相持。",
    "T48n2016_064:0779b19_13": "天福之妙力能如此。",
    "T48n2016_064:0779b20_14": "目連飛往。",
    "T48n2016_064:0779b20_15": "帝釋將目連看堂。",
    "T48n2016_064:0779b20_16": "諸天女皆羞目連。",
    "T48n2016_064:0779b21_17": "悉隱逃不出。",
    "T48n2016_064:0779b21_18": "目連念帝釋著樂。",
    "T48n2016_064:0779b21_19": "不修道本。",
    "T48n2016_064:0779b22_20": "即變化火。",
    "T48n2016_064:0779b22_21": "燒得勝堂。",
    "T48n2016_064:0779b22_22": "爀然崩壞。",
    "T48n2016_064:0779b22_23": "仍為帝釋廣說無常。",
    "T48n2016_064:0779b23_24": "帝釋歡喜。",
    "T48n2016_064:0779b23_25": "後堂儼然。",
    "T48n2016_064:0779b23_26": "無灰煙色。",
    "T48n2016_064:0779b24_27": "釋曰。",
    "T48n2016_064:0779b24_28": "以帝釋恃其天福。",
    "T48n2016_064:0779b24_29": "執著有為故。",
    "T48n2016_064:0779b24_30": "目連垂方便門。",
    "T48n2016_064:0779b25_31": "示無常境。",
    "T48n2016_064:0779b25_32": "問。",
    "T48n2016_064:0779b25_33": "天堂既爀然崩壞。",
    "T48n2016_064:0779b26_0": "云何儼然無灰煙之色。",
    "T48n2016_064:0779b26_1": "答。",
    "T48n2016_064:0779b26_2": "此火非是目連神通之火。",
    "T48n2016_064:0779b27_3": "即是帝釋心中火。",
    "T48n2016_064:0779b27_4": "故法華經云。",
    "T48n2016_064:0779b27_5": "貪著所愛。",
    "T48n2016_064:0779b28_6": "則為所燒。",
    "T48n2016_064:0779b28_7": "既以貪著之心。",
    "T48n2016_064:0779b28_8": "遂見宮殿焚爇。",
    "T48n2016_064:0779b29_9": "及悟無常之事。",
    "T48n2016_064:0779b29_10": "則貪欲之火潛消。",
    "T48n2016_064:0779b29_11": "所以即見堂殿宛然。",
    "T48n2016_064:0779c01_12": "無有灰煙之色。",
    "T48n2016_064:0779c01_13": "以目連為增。",
    "T48n2016_064:0779c02_14": "上緣故。",
    "T48n2016_064:0779c02_15": "自見被燒。",
    "T48n2016_064:0779c02_16": "然則堂本不燒。",
    "T48n2016_064:0779c02_17": "故知迷悟唯心。",
    "T48n2016_064:0779c03_18": "隱顯在己。",
    "T48n2016_064:0779c03_19": "例餘見聞。",
    "T48n2016_064:0779c03_20": "悉亦如是。",
    "T48n2016_064:0779c03_21": "又經云。",
    "T48n2016_064:0779c04_22": "惡從心生。",
    "T48n2016_064:0779c04_23": "反以自賊。",
    "T48n2016_064:0779c04_24": "如鐵生垢。",
    "T48n2016_064:0779c04_25": "消毀其形。",
    "T48n2016_064:0779c05_0": "樹繁華果。",
    "T48n2016_064:0779c05_1": "還折其枝。",
    "T48n2016_064:0779c05_2": "蚖蛇含毒。",
    "T48n2016_064:0779c05_3": "反害其驅。",
    "T48n2016_064:0779c05_4": "方知無始已來。",
    "T48n2016_064:0779c06_5": "至于今日。",
    "T48n2016_064:0779c06_6": "四威儀內。",
    "T48n2016_064:0779c06_7": "十二時中。",
    "T48n2016_064:0779c07_0": "皆是將心取心。",
    "T48n2016_064:0779c07_1": "以識緣識。",
    "T48n2016_064:0779c07_2": "畢竟內外無有一塵。",
    "T48n2016_064:0779c08_3": "為對為治。",
    "T48n2016_064:0779c08_4": "可取可捨。",
    "T48n2016_064:0779c08_5": "堪嗟世俗迷倒之人。",
    "T48n2016_064:0779c09_0": "背覺合塵。",
    "T48n2016_064:0779c09_1": "日用心行。",
    "T48n2016_064:0779c09_2": "損他害彼。",
    "T48n2016_064:0779c09_3": "潤己資身。",
    "T48n2016_064:0779c09_4": "並是自陷自傷。",
    "T48n2016_064:0779c10_5": "不知不覺。",
    "T48n2016_064:0779c10_6": "未窮此旨。",
    "T48n2016_064:0779c10_7": "物我難忘。",
    "T48n2016_064:0779c11_0": "直了斯宗。",
    "T48n2016_064:0779c11_1": "自他無寄。",
    "T48n2016_064:0779c11_2": "百論問云。",
    "T48n2016_064:0779c11_3": "如虛空華無。",
    "T48n2016_064:0779c12_0": "故不可見。",
    "T48n2016_064:0779c12_1": "如瓶現見故。",
    "T48n2016_064:0779c12_2": "當知有瓶。",
    "T48n2016_064:0779c12_3": "答曰。",
    "T48n2016_064:0779c12_4": "不見。",
    "T48n2016_064:0779c13_0": "何故不見。",
    "T48n2016_064:0779c13_1": "汝言現見。",
    "T48n2016_064:0779c13_2": "為眼見。",
    "T48n2016_064:0779c13_3": "為識見。",
    "T48n2016_064:0779c13_4": "若眼見者。",
    "T48n2016_064:0779c14_5": "死人有眼。",
    "T48n2016_064:0779c14_6": "亦應見。",
    "T48n2016_064:0779c14_7": "若識見者。",
    "T48n2016_064:0779c14_8": "盲人有識。",
    "T48n2016_064:0779c14_9": "亦應見。",
    "T48n2016_064:0779c15_10": "若根識一一別不見。",
    "T48n2016_064:0779c15_11": "和合亦不見。",
    "T48n2016_064:0779c15_12": "喻如一盲不能見。",
    "T48n2016_064:0779c16_13": "眾盲亦不見。",
    "T48n2016_064:0779c16_14": "五根亦爾。",
    "T48n2016_064:0779c16_15": "四性皆空。",
    "T48n2016_064:0779c17_16": "大智度論云。",
    "T48n2016_064:0779c17_17": "色等諸法。",
    "T48n2016_064:0779c17_18": "不作大。",
    "T48n2016_064:0779c17_19": "不作小。",
    "T48n2016_064:0779c18_0": "故。",
    "T48n2016_064:0779c18_1": "凡夫人心。",
    "T48n2016_064:0779c18_2": "於諸法中。",
    "T48n2016_064:0779c18_3": "隨意作大小。",
    "T48n2016_064:0779c18_4": "如人急時。",
    "T48n2016_064:0779c19_5": "其心縮小。",
    "T48n2016_064:0779c19_6": "安隱富樂時。",
    "T48n2016_064:0779c19_7": "心則寬大。",
    "T48n2016_064:0779c19_8": "又如八背捨中。",
    "T48n2016_064:0779c20_9": "隨心。",
    "T48n2016_064:0779c20_10": "故外色或大或小等。",
    "T48n2016_064:0779c20_11": "故摩訶般若經云。",
    "T48n2016_064:0779c21_12": "般若波羅蜜。",
    "T48n2016_064:0779c21_13": "無聞無見。",
    "T48n2016_064:0779c21_14": "諸法鈍故。",
    "T48n2016_064:0779c21_15": "是以凡夫界中。",
    "T48n2016_064:0779c22_16": "觀相元妄。",
    "T48n2016_064:0779c22_17": "聖人境內。",
    "T48n2016_064:0779c22_18": "觀性元真。",
    "T48n2016_064:0779c23_0": "以觀相故。",
    "T48n2016_064:0779c23_1": "不得無。",
    "T48n2016_064:0779c23_2": "以觀性故。",
    "T48n2016_064:0779c23_3": "不得有。",
    "T48n2016_064:0779c23_4": "以不得無故。",
    "T48n2016_064:0779c24_5": "如但見其波。",
    "T48n2016_064:0779c24_6": "不見其水。",
    "T48n2016_064:0779c24_7": "以不得有故。",
    "T48n2016_064:0779c24_8": "但見其水。",
    "T48n2016_064:0779c25_9": "不見其波。",
    "T48n2016_064:0779c25_10": "又如向瞖眼人。",
    "T48n2016_064:0779c25_11": "說空中無華。",
    "T48n2016_064:0779c26_12": "對狂病人。",
    "T48n2016_064:0779c26_13": "說目前無鬼。",
    "T48n2016_064:0779c26_14": "徒費言語。",
    "T48n2016_064:0779c26_15": "終不信受。",
    "T48n2016_064:0779c27_16": "直待目淨心安。",
    "T48n2016_064:0779c27_17": "自然無見。",
    "T48n2016_064:0779c28_0": "宗鏡錄卷第六十四"
}