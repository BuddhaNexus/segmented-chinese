{
    "T32n1671_002:0721a20_0": "福蓋正行所集經卷第二",
    "T32n1671_002:0721a22_0": "龍樹菩薩集",
    "T32n1671_002:0721a23_0": "西天譯經三藏朝散大夫",
    "T32n1671_002:0721a24_0": "試鴻臚卿宣梵大師賜紫",
    "T32n1671_002:0721a25_0": "沙門臣日稱等奉　詔譯",
    "T32n1671_002:0721a26_0": "爾時帝釋天主。",
    "T32n1671_002:0721a26_1": "首戴摩尼殊妙寶冠。",
    "T32n1671_002:0721a26_2": "從忉利天。",
    "T32n1671_002:0721a27_3": "來詣佛所。",
    "T32n1671_002:0721a27_4": "見佛身相。",
    "T32n1671_002:0721a27_5": "眾德莊嚴。",
    "T32n1671_002:0721a27_6": "心大歡喜。",
    "T32n1671_002:0721a28_7": "得未曾有。",
    "T32n1671_002:0721a28_8": "頭面敬禮佛世尊足。",
    "T32n1671_002:0721a28_9": "以大妙音。",
    "T32n1671_002:0721a29_0": "稱揚佛德。",
    "T32n1671_002:0721a29_1": "若諸眾生。",
    "T32n1671_002:0721a29_2": "覩佛相好。",
    "T32n1671_002:0721a29_3": "發希有心。",
    "T32n1671_002:0721b01_0": "供養恭敬。",
    "T32n1671_002:0721b01_1": "尊重讚歎。",
    "T32n1671_002:0721b01_2": "則能破壞四種魔業。",
    "T32n1671_002:0721b01_3": "成就義利。",
    "T32n1671_002:0721b02_4": "獲大吉祥。",
    "T32n1671_002:0721b02_5": "汝等天人。",
    "T32n1671_002:0721b02_6": "及諸魔梵。",
    "T32n1671_002:0721b02_7": "皆當至此。",
    "T32n1671_002:0721b03_8": "覲無上尊。",
    "T32n1671_002:0721b03_9": "是時有諸持明大仙。",
    "T32n1671_002:0721b03_10": "日月天子。",
    "T32n1671_002:0721b04_11": "及諸宿曜。",
    "T32n1671_002:0721b04_12": "水天。",
    "T32n1671_002:0721b04_13": "火天。",
    "T32n1671_002:0721b04_14": "多聞天。",
    "T32n1671_002:0721b04_15": "焰摩天。",
    "T32n1671_002:0721b05_0": "大梵天。",
    "T32n1671_002:0721b05_1": "力堅天。",
    "T32n1671_002:0721b05_2": "那羅延天。",
    "T32n1671_002:0721b05_3": "鉢囉[口*女]摩那天等。",
    "T32n1671_002:0721b06_4": "及諸龍神。",
    "T32n1671_002:0721b06_5": "夜叉。",
    "T32n1671_002:0721b06_6": "乾闥婆。",
    "T32n1671_002:0721b06_7": "阿脩羅。",
    "T32n1671_002:0721b06_8": "迦樓羅。",
    "T32n1671_002:0721b07_0": "緊那羅。",
    "T32n1671_002:0721b07_1": "畢[(匕/示)*(入/米)]多。",
    "T32n1671_002:0721b07_2": "毘舍遮。",
    "T32n1671_002:0721b07_3": "塞健陀等。",
    "T32n1671_002:0721b07_4": "如是眾類。",
    "T32n1671_002:0721b08_5": "皆共一心。",
    "T32n1671_002:0721b08_6": "供養禮拜讚佛功德。",
    "T32n1671_002:0721b08_7": "是出世間。",
    "T32n1671_002:0721b09_8": "第一智慧。",
    "T32n1671_002:0721b09_9": "廣大名稱。",
    "T32n1671_002:0721b09_10": "靡不聞知。",
    "T32n1671_002:0721b09_11": "舍利弗等。",
    "T32n1671_002:0721b10_12": "諸大聲聞。",
    "T32n1671_002:0721b10_13": "皆不能了彼智境界。",
    "T32n1671_002:0721b10_14": "自蘇彌盧頂。",
    "T32n1671_002:0721b11_15": "至色究竟天。",
    "T32n1671_002:0721b11_16": "一切有情。",
    "T32n1671_002:0721b11_17": "咸共諦觀如來。",
    "T32n1671_002:0721b12_0": "應供。",
    "T32n1671_002:0721b12_1": "正遍知。",
    "T32n1671_002:0721b12_2": "明行足。",
    "T32n1671_002:0721b12_3": "善逝。",
    "T32n1671_002:0721b12_4": "世間解。",
    "T32n1671_002:0721b12_5": "無上士。",
    "T32n1671_002:0721b13_0": "調御丈夫。",
    "T32n1671_002:0721b13_1": "天人師。",
    "T32n1671_002:0721b13_2": "佛世尊。",
    "T32n1671_002:0721b13_3": "其所說法。",
    "T32n1671_002:0721b13_4": "言無虛妄。",
    "T32n1671_002:0721b14_5": "初中後善。",
    "T32n1671_002:0721b14_6": "其言巧妙。",
    "T32n1671_002:0721b14_7": "其義深廣。",
    "T32n1671_002:0721b14_8": "能破寡聞無智眾生愚癡暗鈍。",
    "T32n1671_002:0721b15_9": "令彼聞已。",
    "T32n1671_002:0721b15_10": "生大覺悟。",
    "T32n1671_002:0721b15_11": "樂脩正行。",
    "T32n1671_002:0721b16_12": "增益慧命。",
    "T32n1671_002:0721b16_13": "決定得免惡道怖畏。",
    "T32n1671_002:0721b16_14": "能闢涅盤廣大城門。",
    "T32n1671_002:0721b17_15": "入不思議解脫境界。",
    "T32n1671_002:0721b18_0": "此經中說福蓋先因。",
    "T32n1671_002:0721b18_1": "云何了知。",
    "T32n1671_002:0721b18_2": "聞是說已。",
    "T32n1671_002:0721b18_3": "廣行淨施。",
    "T32n1671_002:0721b19_4": "堅持禁戒。",
    "T32n1671_002:0721b19_5": "於世欲樂。",
    "T32n1671_002:0721b19_6": "不生愛樂。",
    "T32n1671_002:0721b19_7": "諸有善利。",
    "T32n1671_002:0721b20_8": "咸生信順。",
    "T32n1671_002:0721b20_9": "如是脩作。",
    "T32n1671_002:0721b20_10": "速得成就。",
    "T32n1671_002:0721b20_11": "譬如有人。",
    "T32n1671_002:0721b21_12": "於夜暗中。",
    "T32n1671_002:0721b21_13": "持大炬火。",
    "T32n1671_002:0721b21_14": "入大舍宅。",
    "T32n1671_002:0721b21_15": "於彼方處。",
    "T32n1671_002:0721b22_16": "皆得明見。",
    "T32n1671_002:0721b22_17": "是中所有珍寶庫藏。",
    "T32n1671_002:0721b22_18": "種種什物。",
    "T32n1671_002:0721b23_19": "若精若麁。",
    "T32n1671_002:0721b23_20": "各各顯現。",
    "T32n1671_002:0721b23_21": "悉能受用。",
    "T32n1671_002:0721b23_22": "獲安隱樂。",
    "T32n1671_002:0721b24_23": "若復有人。",
    "T32n1671_002:0721b24_24": "於此經中。",
    "T32n1671_002:0721b24_25": "受持讀誦。",
    "T32n1671_002:0721b24_26": "樂聞深義。",
    "T32n1671_002:0721b25_27": "親近法師。",
    "T32n1671_002:0721b25_28": "如理思惟。",
    "T32n1671_002:0721b25_29": "心生覺悟。",
    "T32n1671_002:0721b25_30": "當知是人。",
    "T32n1671_002:0721b26_0": "能於生死長夜之中。",
    "T32n1671_002:0721b26_1": "秉大智炬。",
    "T32n1671_002:0721b26_2": "入涅盤城。",
    "T32n1671_002:0721b27_0": "於甚深法若理若事。",
    "T32n1671_002:0721b27_1": "悉能了解。",
    "T32n1671_002:0721b27_2": "咸得通達。",
    "T32n1671_002:0721b27_3": "離諸疑惑。",
    "T32n1671_002:0721b28_4": "破諸癡暗。",
    "T32n1671_002:0721b28_5": "出離輪迴。",
    "T32n1671_002:0721b28_6": "心得解脫。",
    "T32n1671_002:0721b28_7": "而能受用無盡法樂。",
    "T32n1671_002:0721c01_0": "如世尊說。",
    "T32n1671_002:0721c01_1": "有漏世間。",
    "T32n1671_002:0721c01_2": "不生勝慧。",
    "T32n1671_002:0721c01_3": "唯正智燈。",
    "T32n1671_002:0721c01_4": "能破癡暗。",
    "T32n1671_002:0721c02_5": "是故智者當求出世無漏正法。",
    "T32n1671_002:0721c02_6": "於佛所說契經論議相應教法。",
    "T32n1671_002:0721c03_7": "應善觀察。",
    "T32n1671_002:0721c03_8": "如諸有情。",
    "T32n1671_002:0721c04_9": "造福非福。",
    "T32n1671_002:0721c04_10": "各受彼報。",
    "T32n1671_002:0721c04_11": "定無差忒。",
    "T32n1671_002:0721c04_12": "當知世間。",
    "T32n1671_002:0721c05_13": "皆因緣生。",
    "T32n1671_002:0721c05_14": "若無眾生。",
    "T32n1671_002:0721c05_15": "則無煩惱。",
    "T32n1671_002:0721c05_16": "若無煩惱。",
    "T32n1671_002:0721c06_17": "則無地獄。",
    "T32n1671_002:0721c06_18": "是故我今說因緣法。",
    "T32n1671_002:0721c06_19": "非如外道邪執異見。",
    "T32n1671_002:0721c07_20": "無因無緣。",
    "T32n1671_002:0721c07_21": "生一切法。",
    "T32n1671_002:0721c07_22": "彼計棘刺銛利。",
    "T32n1671_002:0721c08_23": "何人所削。",
    "T32n1671_002:0721c08_24": "禽獸羽毛。",
    "T32n1671_002:0721c08_25": "誰為彩繪。",
    "T32n1671_002:0721c08_26": "是事顯然。",
    "T32n1671_002:0721c09_27": "何假因業。",
    "T32n1671_002:0721c09_28": "由此了知。",
    "T32n1671_002:0721c09_29": "世間所有。",
    "T32n1671_002:0721c09_30": "出於自然。",
    "T32n1671_002:0721c10_31": "不須脩作。",
    "T32n1671_002:0721c10_32": "如來知已。",
    "T32n1671_002:0721c10_33": "起大悲心。",
    "T32n1671_002:0721c10_34": "憐愍教化。",
    "T32n1671_002:0721c11_35": "以智光明。",
    "T32n1671_002:0721c11_36": "滅彼癡暗。",
    "T32n1671_002:0721c11_37": "漸令悟入一切智智。",
    "T32n1671_002:0721c12_0": "捨本邪見。",
    "T32n1671_002:0721c12_1": "於佛法中。",
    "T32n1671_002:0721c12_2": "心得解脫。",
    "T32n1671_002:0721c13_0": "此經中說。",
    "T32n1671_002:0721c13_1": "佛所教誨。",
    "T32n1671_002:0721c13_2": "說施等法。",
    "T32n1671_002:0721c13_3": "能出輪迴。",
    "T32n1671_002:0721c13_4": "得諸快樂。",
    "T32n1671_002:0721c14_5": "現見世間諸有情類。",
    "T32n1671_002:0721c14_6": "造福非福。",
    "T32n1671_002:0721c14_7": "受苦樂報。",
    "T32n1671_002:0721c15_8": "如給孤獨長者。",
    "T32n1671_002:0721c15_9": "發淨信心。",
    "T32n1671_002:0721c15_10": "以三十俱胝金銀珍寶。",
    "T32n1671_002:0721c16_11": "奉施如來。",
    "T32n1671_002:0721c16_12": "及諸弟子。",
    "T32n1671_002:0721c16_13": "阿[少/兔]樓馱大阿羅漢等。",
    "T32n1671_002:0721c17_14": "造立精舍。",
    "T32n1671_002:0721c17_15": "興大供養。",
    "T32n1671_002:0721c17_16": "現生獲得無量福報。",
    "T32n1671_002:0721c18_17": "具大名稱。",
    "T32n1671_002:0721c18_18": "安隱富饒。",
    "T32n1671_002:0721c18_19": "種種帑藏。",
    "T32n1671_002:0721c18_20": "悉皆盈溢。",
    "T32n1671_002:0721c19_21": "親屬朋友。",
    "T32n1671_002:0721c19_22": "奴婢僕從。",
    "T32n1671_002:0721c19_23": "廣多熾盛。",
    "T32n1671_002:0721c19_24": "皆得圓滿。",
    "T32n1671_002:0721c20_25": "受用無盡殊勝快樂。",
    "T32n1671_002:0721c20_26": "斯由施故。",
    "T32n1671_002:0721c20_27": "感報如是。",
    "T32n1671_002:0721c21_0": "又諸如來。",
    "T32n1671_002:0721c21_1": "大悲憐愍一切眾生。",
    "T32n1671_002:0721c21_2": "如世醫王。",
    "T32n1671_002:0721c21_3": "能以良藥。",
    "T32n1671_002:0721c22_4": "善療世間風癀痰癊。",
    "T32n1671_002:0721c22_5": "種種諸疾。",
    "T32n1671_002:0721c22_6": "使令除愈。",
    "T32n1671_002:0721c23_7": "如來亦爾。",
    "T32n1671_002:0721c23_8": "善說法藥。",
    "T32n1671_002:0721c23_9": "能祛眾生根隨煩惱。",
    "T32n1671_002:0721c24_10": "令得解脫。",
    "T32n1671_002:0721c24_11": "然彼有情。",
    "T32n1671_002:0721c24_12": "無善種子。",
    "T32n1671_002:0721c24_13": "無有資糧。",
    "T32n1671_002:0721c25_14": "不發勇猛。",
    "T32n1671_002:0721c25_15": "不求解脫。",
    "T32n1671_002:0721c25_16": "三毒痼疾之所纏縛。",
    "T32n1671_002:0721c26_17": "如是之人。",
    "T32n1671_002:0721c26_18": "難可化度。",
    "T32n1671_002:0721c26_19": "是故如來。",
    "T32n1671_002:0721c26_20": "平等大悲。",
    "T32n1671_002:0721c27_21": "無冤親想。",
    "T32n1671_002:0721c27_22": "授與法藥。",
    "T32n1671_002:0721c27_23": "使之服行。",
    "T32n1671_002:0721c27_24": "為說布施持戒等行。",
    "T32n1671_002:0721c28_25": "常當受持甚深經典。",
    "T32n1671_002:0721c29_0": "又彼人身。",
    "T32n1671_002:0721c29_1": "極為難得。",
    "T32n1671_002:0721c29_2": "譬如盲龜。",
    "T32n1671_002:0721c29_3": "遇浮木孔。",
    "T32n1671_002:0721c29_4": "勤脩十善。",
    "T32n1671_002:0722a01_5": "求離苦際。",
    "T32n1671_002:0722a01_6": "縱得人身。",
    "T32n1671_002:0722a01_7": "不生中國。",
    "T32n1671_002:0722a01_8": "諸根不具。",
    "T32n1671_002:0722a02_9": "或於佛法。",
    "T32n1671_002:0722a02_10": "心不愛樂。",
    "T32n1671_002:0722a02_11": "或復生彼無佛世界。",
    "T32n1671_002:0722a03_12": "或由惡業。",
    "T32n1671_002:0722a03_13": "受瘖瘂報。",
    "T32n1671_002:0722a03_14": "口不能宣諸佛正法。",
    "T32n1671_002:0722a04_15": "於佛功德。",
    "T32n1671_002:0722a04_16": "不能了知。",
    "T32n1671_002:0722a04_17": "又諸眾生。",
    "T32n1671_002:0722a04_18": "愚癡所覆。",
    "T32n1671_002:0722a05_19": "邪見惑心。",
    "T32n1671_002:0722a05_20": "背善知識。",
    "T32n1671_002:0722a05_21": "壞正法船。",
    "T32n1671_002:0722a05_22": "摧法寶山。",
    "T32n1671_002:0722a06_23": "伐智林木。",
    "T32n1671_002:0722a06_24": "逃解脫城。",
    "T32n1671_002:0722a06_25": "闢三惡道。",
    "T32n1671_002:0722a06_26": "不能入解淨心信索。",
    "T32n1671_002:0722a07_27": "不能建立真實法幢。",
    "T32n1671_002:0722a07_28": "則為焚燒天中宮殿。",
    "T32n1671_002:0722a08_29": "積聚世間廣大珍財。",
    "T32n1671_002:0722a08_30": "自恃豪富。",
    "T32n1671_002:0722a09_0": "起大我慢。",
    "T32n1671_002:0722a09_1": "無智愚癡。",
    "T32n1671_002:0722a09_2": "不善觀察。",
    "T32n1671_002:0722a09_3": "不脩惠施。",
    "T32n1671_002:0722a10_0": "亦不受用。",
    "T32n1671_002:0722a10_1": "為彼慳曜之所執持。",
    "T32n1671_002:0722a10_2": "不悟此身。",
    "T32n1671_002:0722a10_3": "老病死苦。",
    "T32n1671_002:0722a11_4": "常所隨逐。",
    "T32n1671_002:0722a11_5": "造諸惡業。",
    "T32n1671_002:0722a11_6": "不能發露。",
    "T32n1671_002:0722a11_7": "彼盛年時。",
    "T32n1671_002:0722a12_8": "色力充實。",
    "T32n1671_002:0722a12_9": "身形光澤。",
    "T32n1671_002:0722a12_10": "濯去諸垢。",
    "T32n1671_002:0722a12_11": "常生愛樂。",
    "T32n1671_002:0722a13_12": "及其衰老。",
    "T32n1671_002:0722a13_13": "身肢顫動。",
    "T32n1671_002:0722a13_14": "皮膚緩皺。",
    "T32n1671_002:0722a13_15": "多生黑點。",
    "T32n1671_002:0722a14_16": "脣口乾焦。",
    "T32n1671_002:0722a14_17": "氣息喘迫。",
    "T32n1671_002:0722a14_18": "髮白稀少。",
    "T32n1671_002:0722a14_19": "牙齒疎落。",
    "T32n1671_002:0722a15_20": "體生瘡癬。",
    "T32n1671_002:0722a15_21": "肌肉消瘦。",
    "T32n1671_002:0722a15_22": "諸根暗塞。",
    "T32n1671_002:0722a15_23": "筋急拘牽。",
    "T32n1671_002:0722a16_24": "頭足相近。",
    "T32n1671_002:0722a16_25": "行步遲留。",
    "T32n1671_002:0722a16_26": "一切身分。",
    "T32n1671_002:0722a16_27": "猶如執縛。",
    "T32n1671_002:0722a17_28": "意欲所至。",
    "T32n1671_002:0722a17_29": "須假扶掖。",
    "T32n1671_002:0722a17_30": "歌舞嬉戲。",
    "T32n1671_002:0722a17_31": "不復思惟。",
    "T32n1671_002:0722a18_32": "上妙美味。",
    "T32n1671_002:0722a18_33": "無復能食。",
    "T32n1671_002:0722a18_34": "設欲飲噉。",
    "T32n1671_002:0722a18_35": "喉不能嚥。",
    "T32n1671_002:0722a19_36": "目視文字。",
    "T32n1671_002:0722a19_37": "不能辯了。",
    "T32n1671_002:0722a19_38": "意欲所囑。",
    "T32n1671_002:0722a19_39": "言不分明。",
    "T32n1671_002:0722a20_40": "出入息微。",
    "T32n1671_002:0722a20_41": "氣不相續。",
    "T32n1671_002:0722a20_42": "涎涕流落。",
    "T32n1671_002:0722a20_43": "便利污身。",
    "T32n1671_002:0722a21_44": "腹脹絞痛。",
    "T32n1671_002:0722a21_45": "呻吟遠徹。",
    "T32n1671_002:0722a21_46": "唯有皮骨。",
    "T32n1671_002:0722a21_47": "偃臥在床。",
    "T32n1671_002:0722a22_48": "面現醜狀。",
    "T32n1671_002:0722a22_49": "生大恐怖。",
    "T32n1671_002:0722a22_50": "是時有風。",
    "T32n1671_002:0722a22_51": "觸肢節間。",
    "T32n1671_002:0722a23_52": "猶如針刺。",
    "T32n1671_002:0722a23_53": "痛不可忍。",
    "T32n1671_002:0722a23_54": "一切醫師。",
    "T32n1671_002:0722a23_55": "捨之而去。",
    "T32n1671_002:0722a24_56": "無量憂惱之所燒煮。",
    "T32n1671_002:0722a24_57": "一切愛樂悉為他有。",
    "T32n1671_002:0722a25_0": "一切珍財。",
    "T32n1671_002:0722a25_1": "咸盡棄捨。",
    "T32n1671_002:0722a25_2": "如霹靂火。",
    "T32n1671_002:0722a25_3": "破壞無餘。",
    "T32n1671_002:0722a25_4": "無所覺知。",
    "T32n1671_002:0722a26_5": "奄然長逝。",
    "T32n1671_002:0722a26_6": "剎那變異。",
    "T32n1671_002:0722a26_7": "令人怖懼。",
    "T32n1671_002:0722a26_8": "父母妻子。",
    "T32n1671_002:0722a27_9": "內外親屬。",
    "T32n1671_002:0722a27_10": "悲哽流淚。",
    "T32n1671_002:0722a27_11": "心腑痛裂。",
    "T32n1671_002:0722a27_12": "迭相號呼。",
    "T32n1671_002:0722a28_13": "捨我何去。",
    "T32n1671_002:0722a28_14": "於彼他世。",
    "T32n1671_002:0722a28_15": "獨一而往。",
    "T32n1671_002:0722a28_16": "猶如幼商無其侔侶。",
    "T32n1671_002:0722a29_17": "入大黑暗。",
    "T32n1671_002:0722a29_18": "趣大險難。",
    "T32n1671_002:0722a29_19": "墮大深坑。",
    "T32n1671_002:0722b01_20": "沒大苦海。",
    "T32n1671_002:0722b01_21": "無歸無救。",
    "T32n1671_002:0722b01_22": "無所依止。",
    "T32n1671_002:0722b01_23": "琰摩使者。",
    "T32n1671_002:0722b02_24": "黑夜母天。",
    "T32n1671_002:0722b02_25": "怒目利牙。",
    "T32n1671_002:0722b02_26": "醜狀可畏。",
    "T32n1671_002:0722b02_27": "憤怒叱責。",
    "T32n1671_002:0722b03_28": "縶縛而去。",
    "T32n1671_002:0722b03_29": "其疾如風。",
    "T32n1671_002:0722b03_30": "至琰摩所。",
    "T32n1671_002:0722b03_31": "生不崇善。",
    "T32n1671_002:0722b04_32": "死歸苦處。",
    "T32n1671_002:0722b04_33": "無量鋒刃。",
    "T32n1671_002:0722b04_34": "從空而下。",
    "T32n1671_002:0722b04_35": "斫刺身分。",
    "T32n1671_002:0722b05_36": "斷壞肢節。",
    "T32n1671_002:0722b05_37": "剖心割舌。",
    "T32n1671_002:0722b05_38": "血肉交潰。",
    "T32n1671_002:0722b05_39": "手足指節。",
    "T32n1671_002:0722b06_40": "截而棄擲。",
    "T32n1671_002:0722b06_41": "唯有筋骨。",
    "T32n1671_002:0722b06_42": "連持不散。",
    "T32n1671_002:0722b06_43": "受大苦惱。",
    "T32n1671_002:0722b07_44": "尋即悶絕。",
    "T32n1671_002:0722b07_45": "業風所吹。",
    "T32n1671_002:0722b07_46": "倏爾還活。",
    "T32n1671_002:0722b07_47": "長時受苦。",
    "T32n1671_002:0722b08_48": "業盡得脫。",
    "T32n1671_002:0722b09_0": "若諸眾生。",
    "T32n1671_002:0722b09_1": "信順佛語。",
    "T32n1671_002:0722b09_2": "樂作福業。",
    "T32n1671_002:0722b09_3": "利益安樂一切眾生。",
    "T32n1671_002:0722b10_4": "隨其所須。",
    "T32n1671_002:0722b10_5": "而能給與。",
    "T32n1671_002:0722b10_6": "於寒凍者與其炎燠。",
    "T32n1671_002:0722b11_7": "於煩熱者為作清涼。",
    "T32n1671_002:0722b11_8": "於渴乏者汲以清泉。",
    "T32n1671_002:0722b12_9": "於飢餧者施之飲食。",
    "T32n1671_002:0722b12_10": "溺河流者濟之船筏。",
    "T32n1671_002:0722b13_11": "無居止者給其舍宅。",
    "T32n1671_002:0722b13_12": "於貧窮者賜之財帛。",
    "T32n1671_002:0722b14_0": "於諍訟者勸令和順。",
    "T32n1671_002:0722b14_1": "於獨行者為作儕侶。",
    "T32n1671_002:0722b14_2": "於病苦者示之良藥服令輕安。",
    "T32n1671_002:0722b15_3": "為蛇螫者真言加持消除其毒。",
    "T32n1671_002:0722b16_4": "恃我慢者授以智劍令自調伏。",
    "T32n1671_002:0722b17_5": "各悉令得安隱快樂。",
    "T32n1671_002:0722b17_6": "若能如是。",
    "T32n1671_002:0722b17_7": "利樂眾生。",
    "T32n1671_002:0722b18_0": "現在即得如意福報。",
    "T32n1671_002:0722b18_1": "於他世中。",
    "T32n1671_002:0722b18_2": "唯此福業。",
    "T32n1671_002:0722b18_3": "為其伴侶。",
    "T32n1671_002:0722b19_4": "為歸為救。",
    "T32n1671_002:0722b19_5": "為所依止。",
    "T32n1671_002:0722b20_0": "若諸眾生。",
    "T32n1671_002:0722b20_1": "慣習慳業。",
    "T32n1671_002:0722b20_2": "於勝福田。",
    "T32n1671_002:0722b20_3": "不能惠施。",
    "T32n1671_002:0722b20_4": "設佛弟子如優波離。",
    "T32n1671_002:0722b21_5": "來化彼人。",
    "T32n1671_002:0722b21_6": "心亦不喜。",
    "T32n1671_002:0722b21_7": "不信施福。",
    "T32n1671_002:0722b22_8": "能招樂報。",
    "T32n1671_002:0722b22_9": "集積罪惡。",
    "T32n1671_002:0722b22_10": "後受輪迴。",
    "T32n1671_002:0722b22_11": "設得為人。",
    "T32n1671_002:0722b23_12": "生下劣族。",
    "T32n1671_002:0722b23_13": "或屠殺家。",
    "T32n1671_002:0722b23_14": "或除糞家。",
    "T32n1671_002:0722b23_15": "造車。",
    "T32n1671_002:0722b23_16": "作[疊*毛]。",
    "T32n1671_002:0722b24_17": "捕魚。",
    "T32n1671_002:0722b24_18": "窰師。",
    "T32n1671_002:0722b24_19": "耕夫。",
    "T32n1671_002:0722b24_20": "織者。",
    "T32n1671_002:0722b24_21": "作剃髮人。",
    "T32n1671_002:0722b24_22": "染浣衣人諸不善處。",
    "T32n1671_002:0722b25_23": "衣食弊乏。",
    "T32n1671_002:0722b25_24": "為他役使。",
    "T32n1671_002:0722b25_25": "手足皴裂。",
    "T32n1671_002:0722b26_0": "多苦多求。",
    "T32n1671_002:0722b26_1": "日無少暇。",
    "T32n1671_002:0722b26_2": "復為諸病之所纏縛。",
    "T32n1671_002:0722b26_3": "疥癩。",
    "T32n1671_002:0722b27_4": "瘡癬。",
    "T32n1671_002:0722b27_5": "痔瘻。",
    "T32n1671_002:0722b27_6": "癰疽。",
    "T32n1671_002:0722b27_7": "嗽瘧。",
    "T32n1671_002:0722b27_8": "瀉痢。",
    "T32n1671_002:0722b27_9": "癲狂。",
    "T32n1671_002:0722b27_10": "熱病。",
    "T32n1671_002:0722b27_11": "如是等疾。",
    "T32n1671_002:0722b28_12": "逼惱其身。",
    "T32n1671_002:0722b28_13": "羸瘦憔悴。",
    "T32n1671_002:0722b28_14": "手足攣躄。",
    "T32n1671_002:0722b28_15": "唇口喎斜。",
    "T32n1671_002:0722b29_16": "頭髮髼亂。",
    "T32n1671_002:0722b29_17": "兩目流淚。",
    "T32n1671_002:0722b29_18": "下色求人。",
    "T32n1671_002:0722b29_19": "著破弊衣。",
    "T32n1671_002:0722c01_20": "拕挽而進。",
    "T32n1671_002:0722c01_21": "或復遺棄。",
    "T32n1671_002:0722c01_22": "亦不覺知。",
    "T32n1671_002:0722c01_23": "為風所吹。",
    "T32n1671_002:0722c02_24": "形體裸露。",
    "T32n1671_002:0722c02_25": "坐臥糞壤。",
    "T32n1671_002:0722c02_26": "猶為自娛。",
    "T32n1671_002:0722c02_27": "自拔其髮。",
    "T32n1671_002:0722c03_28": "殊無慚恥。",
    "T32n1671_002:0722c03_29": "語往來者。",
    "T32n1671_002:0722c03_30": "顧我何為。",
    "T32n1671_002:0722c03_31": "或持破器。",
    "T32n1671_002:0722c04_32": "遍經里巷。",
    "T32n1671_002:0722c04_33": "得少殘食。",
    "T32n1671_002:0722c04_34": "以自活命。",
    "T32n1671_002:0722c04_35": "百千蠅虫。",
    "T32n1671_002:0722c05_36": "競來叢唼。",
    "T32n1671_002:0722c05_37": "內外垢穢。",
    "T32n1671_002:0722c05_38": "眾所惡賤。",
    "T32n1671_002:0722c05_39": "由不善因之所招集。",
    "T32n1671_002:0722c06_40": "自作惡行。",
    "T32n1671_002:0722c06_41": "復教他作。",
    "T32n1671_002:0722c06_42": "是人則為苦惱之藏。",
    "T32n1671_002:0722c07_43": "是故世尊常以大悲。",
    "T32n1671_002:0722c07_44": "憐念一切。",
    "T32n1671_002:0722c08_0": "使令發心。",
    "T32n1671_002:0722c08_1": "決定悔過。",
    "T32n1671_002:0722c08_2": "速令解脫諸惡過患。",
    "T32n1671_002:0722c09_0": "此經中說。",
    "T32n1671_002:0722c09_1": "唯自脩作正行福業。",
    "T32n1671_002:0722c09_2": "能招人天富樂勝報。",
    "T32n1671_002:0722c10_3": "是故比丘。",
    "T32n1671_002:0722c10_4": "受持此經。",
    "T32n1671_002:0722c10_5": "為人演說。",
    "T32n1671_002:0722c10_6": "如說脩行。",
    "T32n1671_002:0722c11_7": "則令自他福蓋成就。",
    "T32n1671_002:0722c12_0": "爾時世尊住王舍城。",
    "T32n1671_002:0722c12_1": "迦蘭陀竹園。",
    "T32n1671_002:0722c12_2": "時提婆達多。",
    "T32n1671_002:0722c13_3": "極大愚癡。",
    "T32n1671_002:0722c13_4": "以惡毒心。",
    "T32n1671_002:0722c13_5": "損害佛法。",
    "T32n1671_002:0722c13_6": "為作百千障礙留難。",
    "T32n1671_002:0722c14_7": "不能動亂佛一毛端。",
    "T32n1671_002:0722c14_8": "即時語彼阿闍世王。",
    "T32n1671_002:0722c15_9": "當出嚴勅。",
    "T32n1671_002:0722c15_10": "宣布城中。",
    "T32n1671_002:0722c15_11": "不得一人往詣佛所。",
    "T32n1671_002:0722c16_12": "及以飲食。",
    "T32n1671_002:0722c16_13": "而為供養。",
    "T32n1671_002:0722c16_14": "當知瞿曇則無所得。",
    "T32n1671_002:0722c17_15": "必當捨此。",
    "T32n1671_002:0722c17_16": "遠適他國。",
    "T32n1671_002:0722c17_17": "王聞是說。",
    "T32n1671_002:0722c17_18": "信而從之。",
    "T32n1671_002:0722c18_19": "時彼城中諸優婆塞。",
    "T32n1671_002:0722c18_20": "知是事已。",
    "T32n1671_002:0722c18_21": "咸曰。",
    "T32n1671_002:0722c18_22": "苦哉。",
    "T32n1671_002:0722c19_23": "今王舍城。",
    "T32n1671_002:0722c19_24": "無有主宰。",
    "T32n1671_002:0722c19_25": "如來出世。",
    "T32n1671_002:0722c19_26": "難得值遇。",
    "T32n1671_002:0722c20_27": "如優曇鉢羅花。",
    "T32n1671_002:0722c20_28": "云何大王信受邪師。",
    "T32n1671_002:0722c20_29": "不聽我等往詣供養。",
    "T32n1671_002:0722c21_30": "不許如來攝受我輩。",
    "T32n1671_002:0722c21_31": "尊者阿難陀。",
    "T32n1671_002:0722c22_32": "聞是語已。",
    "T32n1671_002:0722c22_33": "即往白佛。",
    "T32n1671_002:0722c22_34": "佛語之曰。",
    "T32n1671_002:0722c22_35": "我豫知已。",
    "T32n1671_002:0722c23_36": "奚必軫慮。",
    "T32n1671_002:0722c23_37": "於我法中。",
    "T32n1671_002:0722c23_38": "未甞有一聲聞弟子。",
    "T32n1671_002:0722c24_39": "有所闕乏。",
    "T32n1671_002:0722c24_40": "況我身耶。",
    "T32n1671_002:0722c24_41": "時佛世尊。",
    "T32n1671_002:0722c24_42": "放大光明。",
    "T32n1671_002:0722c25_43": "照王舍城。",
    "T32n1671_002:0722c25_44": "皆令清淨。",
    "T32n1671_002:0722c25_45": "觸斯光者。",
    "T32n1671_002:0722c25_46": "身心泰然。",
    "T32n1671_002:0722c26_47": "是時帝釋覩佛光明。",
    "T32n1671_002:0722c26_48": "以天眼觀。",
    "T32n1671_002:0722c26_49": "知其所由。",
    "T32n1671_002:0722c27_0": "發大勇猛。",
    "T32n1671_002:0722c27_1": "現大威德。",
    "T32n1671_002:0722c27_2": "為大檀越。",
    "T32n1671_002:0722c27_3": "興大供養。",
    "T32n1671_002:0722c28_0": "福蓋正行所集經卷第二"
}