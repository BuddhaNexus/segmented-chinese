[
    {
        "source_sentence": "泉州千佛新著諸祖師頌",
        "from": "T85n2861_001:1320c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終南山僧　慧觀撰序",
        "from": "T85n2861_001:1320c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳泰公著五讚十頌。當時稱之以美談。及",
        "from": "T85n2861_001:1320c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂浦香嚴尤長厥頌。",
        "from": "T85n2861_001:1320c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯則助道之端耳。",
        "from": "T85n2861_001:1320c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自祖燈相囑始迦葉終曹溪。",
        "from": "T85n2861_001:1320c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡三十三祖信衣後迨數人。",
        "from": "T85n2861_001:1320c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先賢之所未讚者。",
        "from": "T85n2861_001:1320c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚且病焉。",
        "from": "T85n2861_001:1320c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖寶林祖述其事閱而可委。",
        "from": "T85n2861_001:1320c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奈何忘機。",
        "from": "T85n2861_001:1320c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尚懶者或陋其繫遠殘秋之可。",
        "from": "T85n2861_001:1320c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚得以前意請於　千佛燈禪師罕讓而弗獲免。",
        "from": "T85n2861_001:1320c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未信宿而成蓋辭理生　千佛之筆當時問答奇句或糅。",
        "from": "T85n2861_001:1320c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其間約字雖則未多。",
        "from": "T85n2861_001:1320c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識者曆觀諸聖之作於是乎在矣。",
        "from": "T85n2861_001:1320c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶納須彌於芥子其橙一也。",
        "from": "T85n2861_001:1320c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以命牋染翰為之序云。",
        "from": "T85n2861_001:1320c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西國二十八代祖師及唐土六祖師。",
        "from": "T85n2861_001:1320c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後󱬯慶明覺大師述。",
        "from": "T85n2861_001:1320c25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偉哉迦葉　　密傳佛心　　身依一納",
        "from": "T85n2861_001:1320c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口海千尋　　威儀庠序　　化道幽深",
        "from": "T85n2861_001:1320c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未逢慈氏　　且定鷄岑",
        "from": "T85n2861_001:1320c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞慶喜　　高建法幢　　傳佛金偈",
        "from": "T85n2861_001:1321a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繼祖銀釭　　慈悲第一　　智慧無雙",
        "from": "T85n2861_001:1321a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲光後䠱　　月印秋江",
        "from": "T85n2861_001:1321a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胎衣尊者　　暗室明燈　　人天耳目",
        "from": "T85n2861_001:1321a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法股肱　　非心非色　　無減無增",
        "from": "T85n2861_001:1321a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "良哉至理　　覺海大鵬",
        "from": "T85n2861_001:1321a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優波鞠多　　辯瀉玄河　　法山崷󱜛",
        "from": "T85n2861_001:1321a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道樹婆娑　　籌盈石室　　屍繫天魔",
        "from": "T85n2861_001:1321a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性非十七　　悟在剎那",
        "from": "T85n2861_001:1321a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多迦大士　　無我出家　　了根達境",
        "from": "T85n2861_001:1321a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兔月空花　　體非形相　　理出齒牙",
        "from": "T85n2861_001:1321a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨方利物　　豈有瓟瓜薄交反以瓠可為飲瓜亦又音雹瓜雹也",
        "from": "T85n2861_001:1321a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌遮加祖　　習五通仙　　遇師正法",
        "from": "T85n2861_001:1321a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "看我心偏　　悟如未悟　　玄之又玄",
        "from": "T85n2861_001:1321a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通示滅　　八部潛然",
        "from": "T85n2861_001:1321a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖婆須蜜　　入彌遮室　　迷悟本如",
        "from": "T85n2861_001:1321a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物我冥一　　平携酒器　　項擎佛曰",
        "from": "T85n2861_001:1321a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奚是奚非　　誰得誰失",
        "from": "T85n2861_001:1321a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛陀難提　　大化群迷　　心無心外",
        "from": "T85n2861_001:1321a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法理高位　　五天論將　　三界雲梯",
        "from": "T85n2861_001:1321a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓然真氣　　南北東西",
        "from": "T85n2861_001:1321a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏陀蜜多　　大器晚成　　五十不語",
        "from": "T85n2861_001:1321b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五十不行　　我逢達士　　倐契無生",
        "from": "T85n2861_001:1321b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崖松有操　　秋鷄無程",
        "from": "T85n2861_001:1321b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脇大尊者　　愛憎網𭫠　　量等虛空",
        "from": "T85n2861_001:1321b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道准簫灑　　真體自然　　因真舒憑",
        "from": "T85n2861_001:1321b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幼世蒼杧　　奔騰意馬",
        "from": "T85n2861_001:1321b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富那夜奢　　智若須彌　　心指法住",
        "from": "T85n2861_001:1321b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身外榮衰　　明暗隱顯　　視聽希夷",
        "from": "T85n2861_001:1321b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現前提住　　更不參差",
        "from": "T85n2861_001:1321b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者馬鳴　　化花□成　　魔宮霧卷",
        "from": "T85n2861_001:1321b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𮇸苑風清　　我欲識佛　　不識者朋",
        "from": "T85n2861_001:1321b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫非玄解　　動足塵生",
        "from": "T85n2861_001:1321b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘羅尊聖　　因地魔王　　憑師指教",
        "from": "T85n2861_001:1321b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺證真常　　胡為愚智　　誰是矩長",
        "from": "T85n2861_001:1321b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德馨性淨　　蘭蕙氷霜",
        "from": "T85n2861_001:1321b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩龍樹　　化龍是霧　　心曉佛心",
        "from": "T85n2861_001:1321b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住而靡住　　身現圓了　　法流膏雨",
        "from": "T85n2861_001:1321b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提婆機投　　孰暗旨趣",
        "from": "T85n2861_001:1321b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦那提婆　　德岸彌高　　迴旋香象",
        "from": "T85n2861_001:1321b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欠㰦金毛　　機通嵒雷　　辯瀉秋濤",
        "from": "T85n2861_001:1321b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始終絕證　　勿誤王刀",
        "from": "T85n2861_001:1321b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅睺道德　　在口寧論　　因師說耳",
        "from": "T85n2861_001:1321b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋得人門　　高提日了　　大照乾坤",
        "from": "T85n2861_001:1321c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不取不捨　　傳乎子孫",
        "from": "T85n2861_001:1321c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧迦難提　　莊嚴王子　　逾域九重",
        "from": "T85n2861_001:1321c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入山千里　　定喻井金　　義乖終始",
        "from": "T85n2861_001:1321c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理屈於師　　忽窮自己",
        "from": "T85n2861_001:1321c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦耶舍多　　幼會佛機　　手携寶鏡",
        "from": "T85n2861_001:1321c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面難提師　　內外絕翳　　眉目無虧",
        "from": "T85n2861_001:1321c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風飄鐸韻　　非我而誰",
        "from": "T85n2861_001:1321c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鳩摩羅多　　大常止簷　　蒙師為澤",
        "from": "T85n2861_001:1321c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "委父無厭　　本非鍛鍊　　肯藉鎚鉗",
        "from": "T85n2861_001:1321c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一榻孤坐　　人天禮瞻",
        "from": "T85n2861_001:1321c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍夜多祖　　格高貌古　　錫有六環",
        "from": "T85n2861_001:1321c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "田無半畝　　言下不生　　何處不普",
        "from": "T85n2861_001:1321c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂手入鄽　　他方此土",
        "from": "T85n2861_001:1321c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆修盤頭　　修行不臥　　雖曆辛懃",
        "from": "T85n2861_001:1321c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻成嬾墮　　因指見見　　逢歌拍和",
        "from": "T85n2861_001:1321c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泡幻無真　　聽情無過",
        "from": "T85n2861_001:1321c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨塔降勇　　自在王子　　雷震蟄行",
        "from": "T85n2861_001:1321c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪師失齒　　神運六通　　道風千里",
        "from": "T85n2861_001:1321c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲色恒真　　何須聵耳",
        "from": "T85n2861_001:1321c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者鶴勒　　上德不得　　任性縱橫",
        "from": "T85n2861_001:1321c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發言奇特　　功高二義　　名宜萬國",
        "from": "T85n2861_001:1321c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首歸依　　祖林膽蔔",
        "from": "T85n2861_001:1322a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子尊者　　人天仰譽　　空裏案青",
        "from": "T85n2861_001:1322a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲間鶴翥　　論鼓纔聲　　法輪高御",
        "from": "T85n2861_001:1322a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "㭫柆邪徒　　梧真去處",
        "from": "T85n2861_001:1322a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆舍斯多　　久離攀㳂　　未逢作者",
        "from": "T85n2861_001:1322a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不聞拳　　傳師衣鉢　　度物橋船",
        "from": "T85n2861_001:1322a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當心妙見　　豈假言宜",
        "from": "T85n2861_001:1322a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如蜜多　　勝王誕慶　　高遠空嬪",
        "from": "T85n2861_001:1322a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逈就道行　　佛法梗樑　　王以瞻敬",
        "from": "T85n2861_001:1322a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞鑒如研　　祖堂金鏡",
        "from": "T85n2861_001:1322a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若多羅　　幼名瓔珞　　父母淪亡",
        "from": "T85n2861_001:1322a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東西盤泊　　一曉龜毛　　恒嗟水涸",
        "from": "T85n2861_001:1322a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果滿菩提　　道源遼廓",
        "from": "T85n2861_001:1322a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提達摩　　道化無為　　九年少室",
        "from": "T85n2861_001:1322a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六葉宗師　　示滅能耳　　隻履西歸",
        "from": "T85n2861_001:1322a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁天不薦　　惠可傳衣",
        "from": "T85n2861_001:1322a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二祖碩學　　操為堅確　　心貫三乘",
        "from": "T85n2861_001:1322a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "項寄五嶽　　天上麒麟　　人間鸑鷟",
        "from": "T85n2861_001:1322a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷臂立靈　　混而不濁",
        "from": "T85n2861_001:1322a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三祖大師　　諸王真子　　語出幽微",
        "from": "T85n2861_001:1322a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無彼此　　或處山林　　或居鄽示",
        "from": "T85n2861_001:1322a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因地花生　　栴檀𭥃旎",
        "from": "T85n2861_001:1322b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四祖十四　　因師解脫　　處世道孤",
        "from": "T85n2861_001:1322b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與慈量闊　　永絕彫熒　　逈法始末",
        "from": "T85n2861_001:1322b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果少花多　　忍傳衣鉢",
        "from": "T85n2861_001:1322b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五祖七歲　　洞達言前　　石牛吐霧",
        "from": "T85n2861_001:1322b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "木馬含咽　　身心恒寂　　理事俱玄",
        "from": "T85n2861_001:1322b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無情無種　　千年萬年",
        "from": "T85n2861_001:1322b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師造黃梅　　得旨南來　　爰因幡義",
        "from": "T85n2861_001:1322b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大震法雷　　道明遭過　　神秀逢迴",
        "from": "T85n2861_001:1322b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣雖不付　　天下花開",
        "from": "T85n2861_001:1322b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀音和尚　　厥名懷讓　　般若栖神",
        "from": "T85n2861_001:1322b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪門呆匠　　五岳德高　　四溟心量",
        "from": "T85n2861_001:1322b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法嗣六人　　馬祖興王",
        "from": "T85n2861_001:1322b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉水真人　　出世盧陵　　唯提一脈",
        "from": "T85n2861_001:1322b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逈出三乘　　𤅀中月燭　　火裏行水",
        "from": "T85n2861_001:1322b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訐君妙會　　說衣想應",
        "from": "T85n2861_001:1322b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐朝國師　　大播鴻猷　　曹溪探月",
        "from": "T85n2861_001:1322b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渭水乘舟　　二天請問　　四眾拋等",
        "from": "T85n2861_001:1322b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法才極瞻　　大耳慚羞",
        "from": "T85n2861_001:1322b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳石頭　　吉水分流　　庵栖碧洞",
        "from": "T85n2861_001:1322b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "車駕白牛　　學成麟角　　譽漏神舟",
        "from": "T85n2861_001:1322b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧問淨土　　不垢何求",
        "from": "T85n2861_001:1322b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬師道一　　行全金石　　悟本超然",
        "from": "T85n2861_001:1322c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋枝勞役　　久定身心　　一時拋擲",
        "from": "T85n2861_001:1322c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大化南昌　　寒松千尺",
        "from": "T85n2861_001:1322c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙州三界寺沙門道真記",
        "from": "T85n2861_001:1322c05_100",
        "context_with_next_sentence": false
    }
]