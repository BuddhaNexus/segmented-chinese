[
    {
        "source_sentence": "天台智者大師齋忌禮讚文",
        "from": "T46n1948_001:0966a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧眾三禮各各互跪燒香散華首者唱云。",
        "from": "T46n1948_001:0966a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首天台教主佛隴禪師。般若之神鑒。無邊",
        "from": "T46n1948_001:0966a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫之光臨。",
        "from": "T46n1948_001:0966a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫盡聲揚虛谷響答。",
        "from": "T46n1948_001:0966a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何疑機扣真慈。",
        "from": "T46n1948_001:0966a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應來不忒。",
        "from": "T46n1948_001:0966a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竊以。",
        "from": "T46n1948_001:0966a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如清淨。",
        "from": "T46n1948_001:0966a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無色像之端。",
        "from": "T46n1948_001:0966a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界含容。",
        "from": "T46n1948_001:0966a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂有往來之狀。",
        "from": "T46n1948_001:0966a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂形萬有。",
        "from": "T46n1948_001:0966a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "混迹群方。",
        "from": "T46n1948_001:0966a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰知證妙位高。",
        "from": "T46n1948_001:0966a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秖仰池深華大。",
        "from": "T46n1948_001:0966a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊堯舜二君之奇相。",
        "from": "T46n1948_001:0966a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作陳隋兩國之尊師。",
        "from": "T46n1948_001:0966a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法圓融。",
        "from": "T46n1948_001:0966a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降魔自在。",
        "from": "T46n1948_001:0966a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智定之巍巍若是。",
        "from": "T46n1948_001:0966a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲之靄靄難量。",
        "from": "T46n1948_001:0966a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T46n1948_001:0966a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著如來衣。",
        "from": "T46n1948_001:0966a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入如來室。",
        "from": "T46n1948_001:0966a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐則如來所坐。",
        "from": "T46n1948_001:0966b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行則如來所行。",
        "from": "T46n1948_001:0966b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為如來手摩。",
        "from": "T46n1948_001:0966b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如來肩荷。",
        "from": "T46n1948_001:0966b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以如來供養。",
        "from": "T46n1948_001:0966b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而供養之。",
        "from": "T46n1948_001:0966b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德不可稱量。",
        "from": "T46n1948_001:0966b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎略難窮盡。",
        "from": "T46n1948_001:0966b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則伏值鶴林追遠。",
        "from": "T46n1948_001:0966b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敢言黍稷非馨。",
        "from": "T46n1948_001:0966b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聊薦精誠。",
        "from": "T46n1948_001:0966b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰惟昭鑒初時唱已。",
        "from": "T46n1948_001:0966b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便請若餘時但除請。",
        "from": "T46n1948_001:0966b04_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直唱此語已。",
        "from": "T46n1948_001:0966b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便陳意禮讚。",
        "from": "T46n1948_001:0966b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教主智者大師。",
        "from": "T46n1948_001:0966b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　惟願降臨道場受我供養三請下皆準此。",
        "from": "T46n1948_001:0966b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台高祖無畏論師龍樹尊者。",
        "from": "T46n1948_001:0966b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台宗教第二祖師北齊尊者。",
        "from": "T46n1948_001:0966b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台適嗣第三祖師南岳尊者。",
        "from": "T46n1948_001:0966b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台結集教藏第五祖師章安尊者。",
        "from": "T46n1948_001:0966b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教觀第六祖師法華尊者。",
        "from": "T46n1948_001:0966b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教觀第七祖師天宮尊者。",
        "from": "T46n1948_001:0966b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台教觀第八祖師左谿尊者。",
        "from": "T46n1948_001:0966b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心奉請天台記主第九祖師荊谿尊者。",
        "from": "T46n1948_001:0966b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　請已讚歎宣疏歎曰。",
        "from": "T46n1948_001:0966b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界圓融象無所象。",
        "from": "T46n1948_001:0966b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如清淨化無所化。",
        "from": "T46n1948_001:0966b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖象無所象。",
        "from": "T46n1948_001:0966b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所而不象。",
        "from": "T46n1948_001:0966b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化無所化。",
        "from": "T46n1948_001:0966b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所而不化。",
        "from": "T46n1948_001:0966b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燦燦現二王之相。",
        "from": "T46n1948_001:0966b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雄雄為兩國之師。",
        "from": "T46n1948_001:0966b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化緣謝南岳之言。",
        "from": "T46n1948_001:0966b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道譽重東林之價舊本又云。",
        "from": "T46n1948_001:0966b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法門功德難可稱揚。",
        "from": "T46n1948_001:0966b20_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則伏值遠忌之晨。",
        "from": "T46n1948_001:0966b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略展薦羞之禮。",
        "from": "T46n1948_001:0966b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有疏詞。",
        "from": "T46n1948_001:0966b21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰對宣白。",
        "from": "T46n1948_001:0966b21_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮大蘇山內修法華三昧時身天台智者。",
        "from": "T46n1948_001:0966b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　自天台智者下眾和拜起已讚歎。",
        "from": "T46n1948_001:0966b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊心法界諸心寂　　如日依空不住空",
        "from": "T46n1948_001:0966b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三千實相頓圓明　　八萬塵勞等真淨",
        "from": "T46n1948_001:0966b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靈山妙會依依見　　寶塔全身了了觀",
        "from": "T46n1948_001:0966b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不是親逢南岳師　　人誰識此深禪相",
        "from": "T46n1948_001:0966b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　故我一心歸命頂禮一拜下去準此。",
        "from": "T46n1948_001:0966b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮華頂峰上降伏天魔眾時身天台智者。",
        "from": "T46n1948_001:0966c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孤禪片石心彌淨　　寒擁深雲夜未央",
        "from": "T46n1948_001:0966c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽震千雷動地來　　潛窺百怪掀天至",
        "from": "T46n1948_001:0966c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始覺鬼神纔散滅　　還為父母更綢繆",
        "from": "T46n1948_001:0966c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強軟消摩寂照功　　神僧出現親稱讚",
        "from": "T46n1948_001:0966c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮瓦官精舍開法華妙義時身天台智者。",
        "from": "T46n1948_001:0966c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鷲峰極唱經稱妙　　四十餘年祕不談",
        "from": "T46n1948_001:0966c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "家業須逢嫡子傳　　髻珠不是隨勳得",
        "from": "T46n1948_001:0966c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權實巍巍唯佛了　　本迹汪汪補處疑",
        "from": "T46n1948_001:0966c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者當時親得聞　　瓦官重更分明說",
        "from": "T46n1948_001:0966c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮玉泉寶閣說摩訶止觀時身天台智者。",
        "from": "T46n1948_001:0966c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九旬慈霔開圓行　　十法融談立妙乘",
        "from": "T46n1948_001:0966c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車高廣具莊嚴　　白牛肥壯行平正",
        "from": "T46n1948_001:0966c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安御四緣遊直道　　能過十境到涼池",
        "from": "T46n1948_001:0966c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘壞驢車滿世間　　稽首天台誓依怙",
        "from": "T46n1948_001:0966c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮太極殿上講仁王般若時身天台智者。",
        "from": "T46n1948_001:0966c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百座似星環北極　　四依如月出東溟",
        "from": "T46n1948_001:0966c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八辯洋洋萬國安　　雙空蕩蕩千災散",
        "from": "T46n1948_001:0966c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉指競鳴金殿響　　牛香重發獸爐騰",
        "from": "T46n1948_001:0966c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首巍巍五忍身　　堪消萬乘殷勤禮",
        "from": "T46n1948_001:0966c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮陳隋兩國授二宮頓戒時身天台智者。",
        "from": "T46n1948_001:0966c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉珮鏘鏘圍法座　　金爐靄靄對人師",
        "from": "T46n1948_001:0966c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拜手咸求服戒纓　　傾眸不捨瞻慈相",
        "from": "T46n1948_001:0966c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五德精明如滿月　　二嚴深廣類滄溟",
        "from": "T46n1948_001:0966c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人中師子法中龍　　隋主從茲稱智者",
        "from": "T46n1948_001:0967a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮佛隴道樹解淨名禪講時身天台智者。",
        "from": "T46n1948_001:0967a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道霜林香徑淨　　冥心月樹石房寒",
        "from": "T46n1948_001:0967a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明淨功夫只自知　　幽深境界何人到",
        "from": "T46n1948_001:0967a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "秉筆或因隋帝命　　開經時感梵僧來",
        "from": "T46n1948_001:0967a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等當時恨不逢　　歸命天台禪智海",
        "from": "T46n1948_001:0967a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮靈石海岸開涅槃萬句時身天台智者。",
        "from": "T46n1948_001:0967a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海山一點秋光裏　　金閣危層翠障間",
        "from": "T46n1948_001:0967a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬句圓開解脫門　　千徒競擁慈悲室",
        "from": "T46n1948_001:0967a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經案夜分江墅月　　講鐘寒徹水村家",
        "from": "T46n1948_001:0967a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三德彌資三觀明　　無人共飽醍醐味",
        "from": "T46n1948_001:0967a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮放生池上講金光流水時身天台智者。",
        "from": "T46n1948_001:0967a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方舟泛泛清江上　　法語𪱌𪱌碧浪心",
        "from": "T46n1948_001:0967a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩岸香飄野老隨　　中流磬發金鱗躍",
        "from": "T46n1948_001:0967a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "計詡獄中曾赴難　　修禪堂上解酬恩",
        "from": "T46n1948_001:0967a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而今依舊󱕃梁多　　慈眼他方應憫見",
        "from": "T46n1948_001:0967a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮石城金剎現雙林善寂時身天台智者。",
        "from": "T46n1948_001:0967a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化緣火滅機薪盡　　端坐冥冥石像前",
        "from": "T46n1948_001:0967a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸子號咷竟不還　　群生盲瞑誰開導",
        "from": "T46n1948_001:0967a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "星河慘淡金波缺　　雲谷颼飀鶴樹低",
        "from": "T46n1948_001:0967a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百金妙藥寄章安　　猶恨無人付禪慧",
        "from": "T46n1948_001:0967a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮佛隴樹下帝封靈塔全身天台智者。",
        "from": "T46n1948_001:0967a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加趺宛似安禪貌　　閉塔猶同揜定房",
        "from": "T46n1948_001:0967a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初夜流光徹遠林　　有時彈指聞深院",
        "from": "T46n1948_001:0967a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年年紫詔離金闕　　歲歲皇華啟石門",
        "from": "T46n1948_001:0967a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後開封失舊身　　不知前往何方去",
        "from": "T46n1948_001:0967b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方世界普生佛剎中身天台智者。",
        "from": "T46n1948_001:0967b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈心天眼應遙見　　六十餘州舊結緣",
        "from": "T46n1948_001:0967b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既將種子播良田　　須為萌芽作甘雨",
        "from": "T46n1948_001:0967b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父去謾留身後藥　　親離空繫醉中珠",
        "from": "T46n1948_001:0967b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神州佛隴願重遊　　速使群生開佛慧",
        "from": "T46n1948_001:0967b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台高祖無畏論師龍樹尊者。",
        "from": "T46n1948_001:0967b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台宗教第二祖師北齊尊者。",
        "from": "T46n1948_001:0967b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台適嗣第三祖師南岳尊者。",
        "from": "T46n1948_001:0967b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台結集教藏第五祖師章安尊者。",
        "from": "T46n1948_001:0967b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台教觀第六祖師法華尊者。",
        "from": "T46n1948_001:0967b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台教觀第七祖師天宮尊者。",
        "from": "T46n1948_001:0967b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台教觀第八祖師左谿尊者。",
        "from": "T46n1948_001:0967b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮天台記主第九祖師荊谿尊者。",
        "from": "T46n1948_001:0967b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　禮已各跪燒香散華默運逆順十心。",
        "from": "T46n1948_001:0967b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運十心已。",
        "from": "T46n1948_001:0967b15_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想對一切三寶諸祖前。",
        "from": "T46n1948_001:0967b15_32",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行懺悔法。",
        "from": "T46n1948_001:0967b15_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心懺悔。",
        "from": "T46n1948_001:0967b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我及十方法界一切眾生。",
        "from": "T46n1948_001:0967b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自無明無始時來。",
        "from": "T46n1948_001:0967b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順有識有流結使。",
        "from": "T46n1948_001:0967b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動身口意。",
        "from": "T46n1948_001:0967b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨貪瞋癡。",
        "from": "T46n1948_001:0967b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造七遮五逆之愆。",
        "from": "T46n1948_001:0967b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犯十重四夷之戒。",
        "from": "T46n1948_001:0967b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀謗三乘正教。",
        "from": "T46n1948_001:0967b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平陵五種法師。",
        "from": "T46n1948_001:0967b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行四邪五邪坐無慚無愧。",
        "from": "T46n1948_001:0967b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指三塗如園觀。",
        "from": "T46n1948_001:0967b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具八苦為莊嚴。",
        "from": "T46n1948_001:0967b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生向邪見家生。",
        "from": "T46n1948_001:0967b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世出空無佛世。",
        "from": "T46n1948_001:0967b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣今日偶得人身。",
        "from": "T46n1948_001:0967b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "效雪嶺出家。",
        "from": "T46n1948_001:0967b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "值天台遺教。",
        "from": "T46n1948_001:0967b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但恨昏雲久覆。",
        "from": "T46n1948_001:0967b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見網交纏。",
        "from": "T46n1948_001:0967b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千如權實法門。",
        "from": "T46n1948_001:0967b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濫稱染指十法成乘妙觀。",
        "from": "T46n1948_001:0967b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未始經心。",
        "from": "T46n1948_001:0967b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空有臨池羨魚。",
        "from": "T46n1948_001:0967b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不解歸家結網。",
        "from": "T46n1948_001:0967b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡猿未鎖。",
        "from": "T46n1948_001:0967b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五塵之林裏長飛。",
        "from": "T46n1948_001:0967b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴鹿當陽。",
        "from": "T46n1948_001:0967b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六欲之澤中永騖。",
        "from": "T46n1948_001:0967b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故使身圍法座。",
        "from": "T46n1948_001:0967b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心繞塵緣。",
        "from": "T46n1948_001:0967b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八音之徒震雷霆。",
        "from": "T46n1948_001:0967b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四辯之謾陳乳色。",
        "from": "T46n1948_001:0967b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加以謔談聖典。",
        "from": "T46n1948_001:0967b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侮慢教文。",
        "from": "T46n1948_001:0967b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧思法佛全身。",
        "from": "T46n1948_001:0967b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈念雪山半偈。",
        "from": "T46n1948_001:0967b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現招愚暗。",
        "from": "T46n1948_001:0967b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來報邪癡。",
        "from": "T46n1948_001:0967b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謗人慢法之愆。",
        "from": "T46n1948_001:0967c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬劫千山之障。",
        "from": "T46n1948_001:0967c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯罪惡無量無邊。",
        "from": "T46n1948_001:0967c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對三寶披陳。",
        "from": "T46n1948_001:0967c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向四依發露。",
        "from": "T46n1948_001:0967c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷相續念。",
        "from": "T46n1948_001:0967c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨覆藏心。",
        "from": "T46n1948_001:0967c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願普承懺悔光明。",
        "from": "T46n1948_001:0967c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾罪等虛空清淨懺悔已一心歸命普禮。",
        "from": "T46n1948_001:0967c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心勸請。",
        "from": "T46n1948_001:0967c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一念一時咸勸請　　十方剎海劫如來",
        "from": "T46n1948_001:0967c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為眾生轉法輪　　莫便涅槃歸寂滅",
        "from": "T46n1948_001:0967c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三乘賢聖諸知識　　一切慈悲住世間",
        "from": "T46n1948_001:0967c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但作眾生利樂緣　　我皆勸請身心禮",
        "from": "T46n1948_001:0967c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　勸請已一心歸命普請。",
        "from": "T46n1948_001:0967c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心隨喜。",
        "from": "T46n1948_001:0967c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空法界微塵數　　諸佛從初發道心",
        "from": "T46n1948_001:0967c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行劫海得菩提　　乃至涅槃分舍利",
        "from": "T46n1948_001:0967c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三乘賢聖無生業　　十善凡夫有漏因",
        "from": "T46n1948_001:0967c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至低頭小善根　　我皆頂戴生歡喜",
        "from": "T46n1948_001:0967c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　隨喜已一心歸命普禮。",
        "from": "T46n1948_001:0967c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心迴向。",
        "from": "T46n1948_001:0967c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從初乃至於隨喜　　三業修行眾善根",
        "from": "T46n1948_001:0967c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴入虛空實際中　　等同利樂群生界",
        "from": "T46n1948_001:0967c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所修福智皆和合　　所成身土悉莊嚴",
        "from": "T46n1948_001:0967c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最後微塵眾道場　　普共眾生成正覺",
        "from": "T46n1948_001:0967c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　迴向已一心歸命普禮。",
        "from": "T46n1948_001:0967c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心發願。",
        "from": "T46n1948_001:0967c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我常隨諸佛學　　微塵剎海劫修行",
        "from": "T46n1948_001:0967c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "析骨書經等妙高　　亡軀為法周沙界",
        "from": "T46n1948_001:0967c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣揚諸佛圓常教　　開示眾生解脫門",
        "from": "T46n1948_001:0967c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然究竟佛菩提　　不捨普賢菩薩行",
        "from": "T46n1948_001:0967c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　舊有願文錄之於此。",
        "from": "T46n1948_001:0967c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我盡生無別念　　天台妙教獨相隨",
        "from": "T46n1948_001:0967c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲香浩浩罷搖情　　名利汪汪休奪志",
        "from": "T46n1948_001:0968a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "展卷研幾雲屋夜　　冥心索隱雪房時",
        "from": "T46n1948_001:0968a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸祖傳弘誓海深　　願常冥助令開悟",
        "from": "T46n1948_001:0968a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　發願已一心歸命普禮。",
        "from": "T46n1948_001:0968a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台智者大師齋忌禮讚文",
        "from": "T46n1948_001:0968a05_100",
        "context_with_next_sentence": false
    }
]