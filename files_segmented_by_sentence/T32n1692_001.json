[
    {
        "source_sentence": "勝軍化世百喻伽他經",
        "from": "T32n1692_001:0788b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度惹爛馱羅國密林",
        "from": "T32n1692_001:0788b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寺三藏明教大師賜紫沙門臣",
        "from": "T32n1692_001:0788b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去仙人𮠎切身娑等，　　典籍章句無不說，",
        "from": "T32n1692_001:0788b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今自詠悅愚懷，　　略誦伽他為百喻。",
        "from": "T32n1692_001:0788b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行恩行義行賢德，　　無我無慢無怯弱，",
        "from": "T32n1692_001:0788b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實慈悲可重師，　　堪作上人出離行。",
        "from": "T32n1692_001:0788b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然貧下存剛志，　　設身富貴亦柔和，",
        "from": "T32n1692_001:0788b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遇強敵而勇力，　　此即名為大人相。",
        "from": "T32n1692_001:0788b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少年行善人希有，　　人來求者歡喜與，",
        "from": "T32n1692_001:0788b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人稱讚我羞聞，　　彼等之人亦難得。",
        "from": "T32n1692_001:0788c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求美稱先求法，　　法上精心德自生，",
        "from": "T32n1692_001:0788c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切戒行堅持密，　　彼人世間甚希有。",
        "from": "T32n1692_001:0788c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天然性善言亦善，　　善人惡人各盡知，",
        "from": "T32n1692_001:0788c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他或有過與藏蓋，　　此等智人世難得。",
        "from": "T32n1692_001:0788c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火性暖兮本自熱，　　月性清涼亦復然，",
        "from": "T32n1692_001:0788c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎帝利族名稱上，　　彼等下族何得怪！",
        "from": "T32n1692_001:0788c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親眷難危須救濟，　　他人有難亦復然，",
        "from": "T32n1692_001:0788c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竭力為人情不二，　　此中活命名正命。",
        "from": "T32n1692_001:0788c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施忍辱及明力，　　調伏諸根語言善，",
        "from": "T32n1692_001:0788c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為聖者真莊嚴，　　金寶莊嚴如擔重。",
        "from": "T32n1692_001:0788c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間未曾有一物，　　不被無常破壞空，",
        "from": "T32n1692_001:0788c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有無為寂靜德，　　經劫凝然得常住。",
        "from": "T32n1692_001:0788c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉形色身端正，　　而具崇修德行光，",
        "from": "T32n1692_001:0788c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如明月在當空，　　清淨光明照樓閣。",
        "from": "T32n1692_001:0788c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴行檀一切人，　　識心成就無邊法，",
        "from": "T32n1692_001:0788c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇力救護劣弱者，　　善哉此德真良善。",
        "from": "T32n1692_001:0788c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德者重德愍無德，　　愚者輕德而捨去，",
        "from": "T32n1692_001:0788c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智如紅日放炎光，　　愚似星光而掩耀。",
        "from": "T32n1692_001:0788c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢人能護身諸過，　　一向修崇德行高，",
        "from": "T32n1692_001:0788c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少若縱心犯一過，　　積修多德亦皆失。",
        "from": "T32n1692_001:0788c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人遠離於戒德，　　常欲親近不善人，",
        "from": "T32n1692_001:0788c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如捨清涼功德池，　　而入稠濁不淨水。",
        "from": "T32n1692_001:0788c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗油身上要除垢，　　除垢復須洗去油，",
        "from": "T32n1692_001:0788c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如作事要成功，　　若得功成捨所作。",
        "from": "T32n1692_001:0788c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人恒惡喻黑蛇，　　惡人迷逸如醉象，",
        "from": "T32n1692_001:0788c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善人怖畏心傷痛，　　惡人顛倒情忻悅。",
        "from": "T32n1692_001:0788c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大火亘天難便滅，　　深崖無底莫能知，",
        "from": "T32n1692_001:0788c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審慧善觀危惡事，　　深行信善無疑謗。",
        "from": "T32n1692_001:0788c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "落崖入火大危嶮，　　或有身存復起行，",
        "from": "T32n1692_001:0789a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人墮入惡趣中，　　惡趣深泉不可出。",
        "from": "T32n1692_001:0789a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大水洪波不可漂，　　大火熾焰不可燒，",
        "from": "T32n1692_001:0789a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強惡群賊不可奪，　　是彼世間最上財。",
        "from": "T32n1692_001:0789a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下劣之人恃有財，　　中品之人無所恃，",
        "from": "T32n1692_001:0789a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中人見財略悅心，　　劣人恃財世最上。",
        "from": "T32n1692_001:0789a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切種族形色德，　　同行親眷與朋友，",
        "from": "T32n1692_001:0789a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一不知何所來，　　唯務貪愚好財利。",
        "from": "T32n1692_001:0789a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富者妄言人為實，　　貧人實語却為非，",
        "from": "T32n1692_001:0789a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諂誑順恃無真行，　　賢善之人聞愧恥。",
        "from": "T32n1692_001:0789a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有財豪貴而無德，　　喻如有德人稱讚，",
        "from": "T32n1692_001:0789a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無財貧下德行全，　　愚者無知却謗毀。",
        "from": "T32n1692_001:0789a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛德行有如無，　　是彼善人真覺觀，",
        "from": "T32n1692_001:0789a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離財安道處清貧，　　親眷輕貧實作妄。",
        "from": "T32n1692_001:0789a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屠兒富貴讚真實，　　上人無財為下劣，",
        "from": "T32n1692_001:0789a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親眷朋友順世情，　　祇奉屠酤無善惡。",
        "from": "T32n1692_001:0789a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾知惡趣沈淪嶮，　　受罪中間苦百般，",
        "from": "T32n1692_001:0789a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞者往來希濟給，　　全無輟惠固違情。",
        "from": "T32n1692_001:0789a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞人不遂逆其情，　　忿意含瞋嘆所恨，",
        "from": "T32n1692_001:0789a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人心硬語言慳，　　捨利不如而捨命。",
        "from": "T32n1692_001:0789a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人慳鄙癡迷重，　　拯救行檀總不知，",
        "from": "T32n1692_001:0789a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "藏貯財帛終散壞，　　若行惠施永堅牢。",
        "from": "T32n1692_001:0789a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一人如是護多財，　　愚迷轉厚無思慮，",
        "from": "T32n1692_001:0789a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受苦寧知虛妄慳，　　多人護物苦平等。",
        "from": "T32n1692_001:0789a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不使不用不與人，　　殊無知此善好事，",
        "from": "T32n1692_001:0789a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金銀積聚滿屋中，　　坑盛不淨有何別？",
        "from": "T32n1692_001:0789a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧窮行施真檀度，　　說彼名為最上人，",
        "from": "T32n1692_001:0789a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴微捨少財帛，　　如河涓滴誰不解。",
        "from": "T32n1692_001:0789a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人依法行不乏，　　好施如同好女色，",
        "from": "T32n1692_001:0789a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若施餘財行間續，　　感果虧盈亦如是。",
        "from": "T32n1692_001:0789b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨心田事法王，　　少年戒德喻花香，",
        "from": "T32n1692_001:0789b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈心柔軟如閨女，　　適悅莊嚴大行芳。",
        "from": "T32n1692_001:0789b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮參聖境行檀施，　　精進多聞受苦辛，",
        "from": "T32n1692_001:0789b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軌則若虧無戒行，　　前修多善並捐功。",
        "from": "T32n1692_001:0789b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今時名稱人知重，　　來世生天眾所欽，",
        "from": "T32n1692_001:0789b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福壽遠延恒快樂，　　皆從持戒得成功。",
        "from": "T32n1692_001:0789b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常聞極苦三塗獄，　　恒守威儀戒德圓，",
        "from": "T32n1692_001:0789b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽盡浮生捨命時，　　焰魔惡趣我無怖。",
        "from": "T32n1692_001:0789b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "城隍聚落與林間，　　或有愚迷或智慧，",
        "from": "T32n1692_001:0789b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使知法不知法，　　若求善逝須持戒。",
        "from": "T32n1692_001:0789b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅持禁戒令清淨，　　恒須親近善知識，",
        "from": "T32n1692_001:0789b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法熏修善業圓，　　一切功德皆集聚。",
        "from": "T32n1692_001:0789b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒法利獲安樂，　　若意愚迷有毀傷，",
        "from": "T32n1692_001:0789b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德命剎那即便滅，　　智者何緣而飲酒？",
        "from": "T32n1692_001:0789b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼或飲酒彰愚劣，　　究竟為非無善名，",
        "from": "T32n1692_001:0789b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽然倒地喻無常，　　染污盈身成不淨。",
        "from": "T32n1692_001:0789b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然親眷同歡飲，　　醉了相違便害命，",
        "from": "T32n1692_001:0789b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是過失剎那間，　　說此酒毒勝毒藥。",
        "from": "T32n1692_001:0789b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得罪多因婬慾行，　　直如捨命尚牽心，",
        "from": "T32n1692_001:0789b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切欲情無善益，　　何用癡迷募女人！",
        "from": "T32n1692_001:0789b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若樂自妻求適悅，　　由常貪愛可合宜，",
        "from": "T32n1692_001:0789b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於他妻妾妄追求，　　當感孤單心怖畏。",
        "from": "T32n1692_001:0789b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "血肉筋髓皮膚蓋，　　內外都來不淨身，",
        "from": "T32n1692_001:0789b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身妻子猶非分，　　他人婦女豈合貪！",
        "from": "T32n1692_001:0789b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人潔志無婬慾，　　知此和合如幻夢，",
        "from": "T32n1692_001:0789b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故遠離於女人，　　而得心安離迷妄。",
        "from": "T32n1692_001:0789b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人實可為適悅，　　富貴嬌奢亦復然，",
        "from": "T32n1692_001:0789b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親眷共同生愛戀，　　命當不久即無常。",
        "from": "T32n1692_001:0789b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人一向增貪愛，　　智者思惟總是虛，",
        "from": "T32n1692_001:0789c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如向愛塵而樂住，　　何時出離得菩提？",
        "from": "T32n1692_001:0789c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行勿憚於勤苦，　　彼後還招安樂身，",
        "from": "T32n1692_001:0789c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應是善言真利益，　　服行可喻妙良藥。",
        "from": "T32n1692_001:0789c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切事行多明了，　　過失危亡盡可知，",
        "from": "T32n1692_001:0789c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是合行彼可行，　　善事云何有蓋覆。",
        "from": "T32n1692_001:0789c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人修作前程事，　　先除邪亂正思惟，",
        "from": "T32n1692_001:0789c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定後時無過咎，　　自然安隱苦不生。",
        "from": "T32n1692_001:0789c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修善業令增長，　　一心寂靜離浮囂，",
        "from": "T32n1692_001:0789c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如有冤家煩惱病，　　自然除捨絕愚癡。",
        "from": "T32n1692_001:0789c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡口兩舌心下劣，　　愚人縱意任情行，",
        "from": "T32n1692_001:0789c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈知孔雀色嚴德，　　可喻狼狗烏鵲噪。",
        "from": "T32n1692_001:0789c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呵責愚癡無正解，　　讚揚精進戒施門，",
        "from": "T32n1692_001:0789c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說有人行此行，　　集福安身而最上。",
        "from": "T32n1692_001:0789c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在法音同歌樂，　　無心忻樂更何憑，",
        "from": "T32n1692_001:0789c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等有情若棄背，　　為是傍生為是人？",
        "from": "T32n1692_001:0789c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利非利都不悟，　　是實無實俱不知，",
        "from": "T32n1692_001:0789c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是暝然無了別，　　雖具人形同畜生。",
        "from": "T32n1692_001:0789c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不分賢善與愚癡，　　豈辯野干異師子，",
        "from": "T32n1692_001:0789c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並無勝劣一般看，　　智者暫時勿共住。",
        "from": "T32n1692_001:0789c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不言自聖不愚癡，　　不作兩舌不我慢，",
        "from": "T32n1692_001:0789c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難知理上有所知，　　說是婆羅門莊嚴。",
        "from": "T32n1692_001:0789c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心細意修真行，　　過失恒時不受行，",
        "from": "T32n1692_001:0789c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我慢惡人興鬪諍，　　如是色德我非有。",
        "from": "T32n1692_001:0789c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡心內懷顛倒，　　慈忍全無凶猛多，",
        "from": "T32n1692_001:0789c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此豪強諸過失，　　執為自德勝他人。",
        "from": "T32n1692_001:0789c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家勝道無心重，　　善友全然不敬親，",
        "from": "T32n1692_001:0789c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師教未曾申供養，　　唯親鬪諍大愚癡。",
        "from": "T32n1692_001:0789c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天邊圓月終須缺，　　山下花芳不久凋，",
        "from": "T32n1692_001:0789c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人世無常何異此，　　須諍人我擬何為？",
        "from": "T32n1692_001:0790a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人本性終無實，　　障礙人修善業因，",
        "from": "T32n1692_001:0790a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿末羅菓有其核，　　此是世間三種過。",
        "from": "T32n1692_001:0790a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊重法師參聖跡，　　心行知足懷悲智，",
        "from": "T32n1692_001:0790a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五種世間事，　　若言難作亦易作。",
        "from": "T32n1692_001:0790a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人知法恒行善，　　復能尋訪善朋友，",
        "from": "T32n1692_001:0790a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻如砂內揀真金，　　一切有情皆知重。",
        "from": "T32n1692_001:0790a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚劣同行不自由，　　自然無德無知重，",
        "from": "T32n1692_001:0790a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設復出家必暴惡，　　縱然活命無善名。",
        "from": "T32n1692_001:0790a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以不信於朋友？",
        "from": "T32n1692_001:0790a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　何以不知於天人？",
        "from": "T32n1692_001:0790a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以不行於方便？",
        "from": "T32n1692_001:0790a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　何以自作於難學？",
        "from": "T32n1692_001:0790a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳人何處解布施？",
        "from": "T32n1692_001:0790a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　流砂何處而有水？",
        "from": "T32n1692_001:0790a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不淨何處有馨香？",
        "from": "T32n1692_001:0790a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　惡人何處有恩義？",
        "from": "T32n1692_001:0790a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憎愛之人何有德？",
        "from": "T32n1692_001:0790a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　冤家何處有善人？",
        "from": "T32n1692_001:0790a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "快樂何人解知足？",
        "from": "T32n1692_001:0790a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　壽命何人得久長？",
        "from": "T32n1692_001:0790a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婬女囂浮無厚信，　　癡人愚鈍無分別，",
        "from": "T32n1692_001:0790a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴暫榮誰得久？",
        "from": "T32n1692_001:0790a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　業因決定難破壞。",
        "from": "T32n1692_001:0790a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婆羅門得食歡喜，　　孔雀聞雷聲歡喜，",
        "from": "T32n1692_001:0790a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善人救護他歡喜，　　愚迷破壞時歡喜。",
        "from": "T32n1692_001:0790a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚迷愛樂行鬪諍，　　如貧得寶心歡喜，",
        "from": "T32n1692_001:0790a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢人聞彼善言詞，　　如蜂聞彼花香氣。",
        "from": "T32n1692_001:0790a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有德之人德是親，　　有過之人過是冤，",
        "from": "T32n1692_001:0790a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賤使之人賤是苦，　　知足之人足是樂。",
        "from": "T32n1692_001:0790a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何憚巡門持鉢化，　　豈辭力役在他方，",
        "from": "T32n1692_001:0790a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不於身著我見，　　恒調心行善柔和。",
        "from": "T32n1692_001:0790a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底心無愛無人我，　　似鹿無家住野林，",
        "from": "T32n1692_001:0790a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住是富豪及尊貴，　　應無少事向他求。",
        "from": "T32n1692_001:0790a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄捨妄緣諸快樂，　　都無繫礙自由閑，",
        "from": "T32n1692_001:0790a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "活命性同於鵝鴨，　　長於清淨水中行。",
        "from": "T32n1692_001:0790a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王城聚落人居止，　　八德多無一二存，",
        "from": "T32n1692_001:0790b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲羞清淨機嫌恥，　　知法無我快樂力。",
        "from": "T32n1692_001:0790b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連山谿澗巖巒窟，　　食菓皮衣伏五根，",
        "from": "T32n1692_001:0790b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜野林堪適悅，　　何須聚落要求人！",
        "from": "T32n1692_001:0790b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居山不見他門戶，　　自在無拘快樂行，",
        "from": "T32n1692_001:0790b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住彼心中所得利，　　降伏根識命長生。",
        "from": "T32n1692_001:0790b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今教化汝等已，　　合掌調柔心意聽，",
        "from": "T32n1692_001:0790b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法藏真安樂，　　彼須忻樂一心求。",
        "from": "T32n1692_001:0790b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝知善報一人身，　　若要剎那不可得，",
        "from": "T32n1692_001:0790b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得後愚癡不作福，　　依前自𧸖自沈淪。",
        "from": "T32n1692_001:0790b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水滴地上非久住，　　可喻人生命不堅，",
        "from": "T32n1692_001:0790b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三種無礙誰能作，　　若是智者方能行。",
        "from": "T32n1692_001:0790b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是彼若隨其力，　　作意三種少分知，",
        "from": "T32n1692_001:0790b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻如野鴿觀自身，　　孔雀莊嚴非勝我。",
        "from": "T32n1692_001:0790b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常生死誰人愛，　　智慧何曾觀五根，",
        "from": "T32n1692_001:0790b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此身雖住終無久，　　說彼虛生在世間。",
        "from": "T32n1692_001:0790b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是焰魔人盡見，　　眾生受苦幾人逃？",
        "from": "T32n1692_001:0790b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老死無侵安樂處，　　云何汝等不能行！",
        "from": "T32n1692_001:0790b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常情物應皆定，　　唯務貪生並不知，",
        "from": "T32n1692_001:0790b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前路無憑光影速，　　緣何兀兀不思惟？",
        "from": "T32n1692_001:0790b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母妻子朋友等，　　和合虛幻暫時間，",
        "from": "T32n1692_001:0790b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法親眷此堪依，　　能去無常生死苦。",
        "from": "T32n1692_001:0790b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多求生得煩惱實，　　護身生得怖畏實，",
        "from": "T32n1692_001:0790b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞生得憂愁實，　　智者若求有何利？",
        "from": "T32n1692_001:0790b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼若不修真如行，　　輪迴生死幾時休？",
        "from": "T32n1692_001:0790b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者恒觀此世間，　　都成幻化愚癡力。",
        "from": "T32n1692_001:0790b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戲言伎唱皆無實，　　貪欲追求喻疥瘡，",
        "from": "T32n1692_001:0790b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "損命不堅如幻夢，　　何如佛法用身心。",
        "from": "T32n1692_001:0790b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是為非所作罪，　　並皆平等壞其身，",
        "from": "T32n1692_001:0790b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間何彼心愚暗，　　不解思惟罪惡生。",
        "from": "T32n1692_001:0790c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所懷善惡心中事，　　護世天人並總知，",
        "from": "T32n1692_001:0790c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心若不能思惟此，　　何時意地消諸罪？",
        "from": "T32n1692_001:0790c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣坐住受用具，　　稍可身依得暫時，",
        "from": "T32n1692_001:0790c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此假助緣行善利，　　其餘資具人煩惱。",
        "from": "T32n1692_001:0790c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖覩莊嚴宮殿等，　　唯便麁惡床臥具，",
        "from": "T32n1692_001:0790c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知足自然心喜樂，　　如觀醜女勝天女。",
        "from": "T32n1692_001:0790c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知世上有為財，　　水火盜賊俱可奪，",
        "from": "T32n1692_001:0790c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是欲求他世福，　　莫求此等不堅財。",
        "from": "T32n1692_001:0790c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論義工商農種士，　　不依法則勿須行，",
        "from": "T32n1692_001:0790c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知此事合如然，　　離福自然不成就。",
        "from": "T32n1692_001:0790c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能作善作不善，　　應知非是別餘人，",
        "from": "T32n1692_001:0790c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並是自身業所造，　　由是眾生一切得。",
        "from": "T32n1692_001:0790c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切所作業，　　若能後有不復生，",
        "from": "T32n1692_001:0790c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生老病苦及無常，　　續續未委從何來！",
        "from": "T32n1692_001:0790c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝軍化世百喻伽他經",
        "from": "T32n1692_001:0790c16_100",
        "context_with_next_sentence": false
    }
]