[
    {
        "source_sentence": "觀自在菩薩阿麼𪘨法此云無畏又云寬廣",
        "from": "T20n1115_001:0502b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔于闐國有清信士。精心持念觀自在菩薩",
        "from": "T20n1115_001:0502b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言。願見大聖彌歷年歲不遂宿心。執志",
        "from": "T20n1115_001:0502b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不易倍復精勤。",
        "from": "T20n1115_001:0502b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後於一夕聞空中聲曰。",
        "from": "T20n1115_001:0502b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝往隣國謁彼某王。",
        "from": "T20n1115_001:0502b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者依言即往彼國。",
        "from": "T20n1115_001:0502b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞王法令非常嚴酷。",
        "from": "T20n1115_001:0502b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有犯必刑。",
        "from": "T20n1115_001:0502b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者遂謁其王。",
        "from": "T20n1115_001:0502b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因蒙汲引詢問所欲白。",
        "from": "T20n1115_001:0502b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以本求遂近入後宮。",
        "from": "T20n1115_001:0502b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉如佛剎土。",
        "from": "T20n1115_001:0502b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王乃觀自在菩薩也。",
        "from": "T20n1115_001:0502b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者白菩薩曰。",
        "from": "T20n1115_001:0502b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聖治化豈用於刑戮。",
        "from": "T20n1115_001:0502b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲何在。",
        "from": "T20n1115_001:0502b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩告曰。",
        "from": "T20n1115_001:0502b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此土眾生剛強難制。",
        "from": "T20n1115_001:0502b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾慜誘道分身為王。",
        "from": "T20n1115_001:0502b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所刑戮者皆化人耳。",
        "from": "T20n1115_001:0502b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使彼獷俗畏威從風。",
        "from": "T20n1115_001:0502b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "政令若成吾當隱矣。",
        "from": "T20n1115_001:0502b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者被王留住數月。",
        "from": "T20n1115_001:0502b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通悟大乘後乃辭歸。",
        "from": "T20n1115_001:0502b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "默然而許。",
        "from": "T20n1115_001:0502b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者白菩薩言。",
        "from": "T20n1115_001:0502b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弟子有幸遇。",
        "from": "T20n1115_001:0502b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聖慈悲得見聞法。",
        "from": "T20n1115_001:0502b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親沐慈化十二秊來方獲斯驗。",
        "from": "T20n1115_001:0502b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世求見菩薩者。",
        "from": "T20n1115_001:0502b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿心不易久受勤苦。",
        "from": "T20n1115_001:0502b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空無所成。",
        "from": "T20n1115_001:0502b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疑心一起謗法獲罪。",
        "from": "T20n1115_001:0502b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲示未來法要。",
        "from": "T20n1115_001:0502b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩告言。",
        "from": "T20n1115_001:0502b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有阿麼𪘨真言章句。",
        "from": "T20n1115_001:0502b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今受與汝。",
        "from": "T20n1115_001:0502b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養簡易。",
        "from": "T20n1115_001:0502b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又時日不多。",
        "from": "T20n1115_001:0502b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心誦持。",
        "from": "T20n1115_001:0502b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當現身滿彼所願。",
        "from": "T20n1115_001:0502b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者既蒙教誨辭歸本國流傳。",
        "from": "T20n1115_001:0502b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信士五天獲驗其數非一。",
        "from": "T20n1115_001:0502b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但依教精修皆見菩薩。",
        "from": "T20n1115_001:0502b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此五濁津梁苦海艥觀自在阿麼𪘨真言曰。",
        "from": "T20n1115_001:0502b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨囉怛曩怛囉夜野曩莫阿哩野嚩路枳帝濕嚩囉野󰂛地薩怛嚩野摩賀薩怛嚩二合野摩賀迦嚕抳迦野怛儞也他阿麼𪘨鉢囉麼𪘨尾麼𪘨多囉𪘨三鉢囉比野𪘨伊里寧只里寧吉里寧阿嚕賀寧儞嚕賀寧馱囉寧馱羅寧馱跛寧阿嚩多囉寧薩嚩多囉寧󰽫跛寧阿󰽫跛寧曩頗曩頗曩頗寧曩拏曩拏曩拏寧住拏戶反住准上寧娑密栗殿覩銘阿舍麼曩跛囉布哩馱寧演曩莫阿哩也嚩路枳帝濕嚩囉野娑嚩二合賀復次若持誦此真言者。",
        "from": "T20n1115_001:0502c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閑淨處或阿蘭若。",
        "from": "T20n1115_001:0502c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於舍利塔前置觀自在菩薩隨力供養清淨洗浴。",
        "from": "T20n1115_001:0502c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食淨食獨處道場。",
        "from": "T20n1115_001:0502c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日一夜持念。",
        "from": "T20n1115_001:0502c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達曉大聖當見。",
        "from": "T20n1115_001:0502c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸願滿足。",
        "from": "T20n1115_001:0502c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾人愛敬。",
        "from": "T20n1115_001:0502c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命智。",
        "from": "T20n1115_001:0502c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能證十地三昧現前。",
        "from": "T20n1115_001:0502c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若犯五逆重罪。",
        "from": "T20n1115_001:0502c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩日雨宿當見。",
        "from": "T20n1115_001:0502c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼王菩薩說是真言已告行者言。",
        "from": "T20n1115_001:0502c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此真言有大神力。",
        "from": "T20n1115_001:0502c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能滅眾生一切業障。",
        "from": "T20n1115_001:0502c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速獲神驗所求如意。",
        "from": "T20n1115_001:0502c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲持此真言求見觀自在菩薩者。",
        "from": "T20n1115_001:0502c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結護加持供養儀軌並依大教蘇悉地經。",
        "from": "T20n1115_001:0502c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及金剛頂瑜伽所說次第。",
        "from": "T20n1115_001:0502c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須志心誦滿千遍。",
        "from": "T20n1115_001:0502c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清淨處或阿蘭若。",
        "from": "T20n1115_001:0502c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於山林或清淨伽藍舍利塔前。",
        "from": "T20n1115_001:0502c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法建立觀自在菩薩道場。",
        "from": "T20n1115_001:0502c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置觀音像。",
        "from": "T20n1115_001:0502c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其力分精誠供養。",
        "from": "T20n1115_001:0502c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨澡浴著新淨衣。",
        "from": "T20n1115_001:0502c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎護三業勿忘喜怒。",
        "from": "T20n1115_001:0502c21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日一夜獨處斷一切語。",
        "from": "T20n1115_001:0502c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不異緣專想觀音。",
        "from": "T20n1115_001:0502c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不間斷誦此真言。",
        "from": "T20n1115_001:0502c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒沈水香或燒五味和香。",
        "from": "T20n1115_001:0502c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香煙勿令斷絕。",
        "from": "T20n1115_001:0502c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念相續一心求見菩薩。",
        "from": "T20n1115_001:0502c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇四角各置一燒。",
        "from": "T20n1115_001:0502c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又各置一盃香水。",
        "from": "T20n1115_001:0502c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者石密漿一是淨牛乳。",
        "from": "T20n1115_001:0502c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一是欝金香水。",
        "from": "T20n1115_001:0502c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一是如常白檀香水。",
        "from": "T20n1115_001:0502c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其供養餅菓粥󰕖等。",
        "from": "T20n1115_001:0502c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平旦所獻󰕖食。",
        "from": "T20n1115_001:0502c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日別齋時盡須收却。",
        "from": "T20n1115_001:0502c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "送安淨處施諸烏鳥。",
        "from": "T20n1115_001:0502c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又下新造飲食供養。",
        "from": "T20n1115_001:0502c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至暮間准前送却。",
        "from": "T20n1115_001:0502c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又下新造成者供養乃至天明日夜之中不得輒有昏沈懈怠恐難得見。",
        "from": "T20n1115_001:0503a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想菩薩毫相之中有兩道光明。",
        "from": "T20n1115_001:0503a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一道直入諸地獄中。",
        "from": "T20n1115_001:0503a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救苦眾生令得解脫。",
        "from": "T20n1115_001:0503a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一光來入修行者頂。",
        "from": "T20n1115_001:0503a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想遍己身。",
        "from": "T20n1115_001:0503a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾惡諸業皆悉消除。",
        "from": "T20n1115_001:0503a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外清淨。",
        "from": "T20n1115_001:0503a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀想念誦志心必見我。",
        "from": "T20n1115_001:0503a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當為彼現身滿其所願。",
        "from": "T20n1115_001:0503a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝可受持。",
        "from": "T20n1115_001:0503a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有曾犯五無間重罪者。",
        "from": "T20n1115_001:0503a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩日兩夜精勤念誦必當得見。",
        "from": "T20n1115_001:0503a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況本清淨者。",
        "from": "T20n1115_001:0503a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除不志心。",
        "from": "T20n1115_001:0503a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏觀自在菩薩畫像法。",
        "from": "T20n1115_001:0503a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名阿麼𪘨觀自在菩薩像。",
        "from": "T20n1115_001:0503a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如波羅密菩薩形。",
        "from": "T20n1115_001:0503a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三目四臂乘白師子座頭向左膝下首戴寶冠。",
        "from": "T20n1115_001:0503a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以白蓮花嚴飾前。",
        "from": "T20n1115_001:0503a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手執鳳頭箜篌。",
        "from": "T20n1115_001:0503a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左一手掌摩竭魚。",
        "from": "T20n1115_001:0503a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右一手持吉祥鳥白色。",
        "from": "T20n1115_001:0503a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左足屈在師子項上。",
        "from": "T20n1115_001:0503a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右足垂下嚴以天衣纓絡。",
        "from": "T20n1115_001:0503a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通身光焰面貌慈悲。",
        "from": "T20n1115_001:0503a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向左諦觀其印以二羽合芙蓉二風如鉤當心。",
        "from": "T20n1115_001:0503a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每至娑嚩賀字。",
        "from": "T20n1115_001:0503a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即動其鉤。",
        "from": "T20n1115_001:0503a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契誠心念一百八不散印為一坐之修行。",
        "from": "T20n1115_001:0503a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須遣助伴持珠記數。",
        "from": "T20n1115_001:0503a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此一日三時並如此儀軌。",
        "from": "T20n1115_001:0503a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩阿麼𪘨法",
        "from": "T20n1115_001:0503a19_100",
        "context_with_next_sentence": false
    }
]