[
    {
        "source_sentence": "佛說辟除諸惡陀羅尼經",
        "from": "T21n1407_001:0922b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1407_001:0922b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1407_001:0922b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告阿難言。",
        "from": "T21n1407_001:0922b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我見世間災沴起時。",
        "from": "T21n1407_001:0922b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂生飛蝗及與毒蟲。",
        "from": "T21n1407_001:0922b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至蚊虻虎狼處處增盛。",
        "from": "T21n1407_001:0922b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致傷苗稼或傷菜果。",
        "from": "T21n1407_001:0922b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂令國內漸成飢饉。",
        "from": "T21n1407_001:0922b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惱害眾生不得安隱。",
        "from": "T21n1407_001:0922b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝宣說辟除諸惡陀羅尼。",
        "from": "T21n1407_001:0922b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生志心持誦。",
        "from": "T21n1407_001:0922b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非獨自利亦利他人。",
        "from": "T21n1407_001:0922b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持誦人欲作成就法者。",
        "from": "T21n1407_001:0922b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須潔淨齋戒發誠諦心。",
        "from": "T21n1407_001:0922b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼滿十萬遍已成精熟。",
        "from": "T21n1407_001:0922b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然可隨處作成就法。",
        "from": "T21n1407_001:0922b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作法者復潔淨已。",
        "from": "T21n1407_001:0922b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然誦諸佛菩薩名號請求加被。",
        "from": "T21n1407_001:0922b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃將少沙盛淨器中。",
        "from": "T21n1407_001:0922b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼八百遍加持前沙。",
        "from": "T21n1407_001:0922b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於有毒蟲處散擲。",
        "from": "T21n1407_001:0922b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切毒蟲皆悉辟除即說陀羅尼曰。",
        "from": "T21n1407_001:0922b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫薩哩嚩二合沒馱󰂛地薩埵曩引一帝引釤引曩莫塞訖哩二合埵引二壹𤚥引尾𭔞切身鉢囉二合踰引惹夜引彌三壹焬尾𭔞三蜜哩二合迭覩彌引四怛𭔞切身他引五訶訶訶六黎黎黎七酇酇酇八酇沙野九呬呬十詰詰十一蜜哩蜜哩十二鉢囉二合引拏迦引喃引十三敦拏滿唐羯嚕彌娑嚩二合引賀引十四薩哩微二合引釤引摩舍迦引喃引十五薩哩微二合引釤引莽酤拏引喃引十六薩哩微二合引釤引鉢輸迦引喃引十七薩哩微二合引釤引遏說引喃引十八薩哩微二合引釤引謨引沙迦引喃引十九薩哩微二合引釤引戍迦舍引哩迦喃引二十薩哩微二合引釤引蘇引羯囉引喃引二十一薩哩微二合引釤引末哩羯二合吒引喃引二十二薩哩微二合引釤引末羅曩引喃引二十三薩哩微二合引釤薩寫伽引怛迦引喃引二十四敦拏滿馱羯嚕彌娑嚩二合引賀引二十五爾時阿難。",
        "from": "T21n1407_001:0922c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞世尊說是辟除諸惡陀羅尼已。",
        "from": "T21n1407_001:0922c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜信受禮佛而退。",
        "from": "T21n1407_001:0922c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說辟除諸惡陀羅尼經",
        "from": "T21n1407_001:0922c06_100",
        "context_with_next_sentence": false
    }
]