{
    "T51n2095_003:1037c02_0": "廬山記卷第三",
    "T51n2095_003:1037c04_0": "山行易覽第四",
    "T51n2095_003:1037c05_0": "江州出德化門五里。",
    "T51n2095_003:1037c05_1": "至延壽院(舊名羅漢壇)延壽院五里。",
    "T51n2095_003:1037c06_2": "至石塘橋周郎中濂溪。",
    "T51n2095_003:1037c06_3": "濂溪東南十里。",
    "T51n2095_003:1037c07_0": "至寶嚴禪院(舊名雙溪)西南十里。",
    "T51n2095_003:1037c07_1": "至祥符觀(舊名太一)寶嚴之南三里。",
    "T51n2095_003:1037c08_2": "又有雲慶庵。",
    "T51n2095_003:1037c08_3": "雲慶一里。",
    "T51n2095_003:1037c08_4": "至寶積庵。",
    "T51n2095_003:1037c09_5": "寶嚴之西七里。",
    "T51n2095_003:1037c09_6": "又有庵巖莊。",
    "T51n2095_003:1037c09_7": "庵巖莊一里。",
    "T51n2095_003:1037c10_0": "至禪智院(舊名淨居)禪智五里。",
    "T51n2095_003:1037c10_1": "亦至祥符觀。",
    "T51n2095_003:1037c10_2": "觀之北五里。",
    "T51n2095_003:1037c11_3": "至龍泉庵。",
    "T51n2095_003:1037c11_4": "龍泉十里。",
    "T51n2095_003:1037c11_5": "至妙智院(舊名行春亭)妙智五里。",
    "T51n2095_003:1037c12_6": "至蛇岡。",
    "T51n2095_003:1037c12_7": "蛇岡之下五里。",
    "T51n2095_003:1037c12_8": "至太平觀(舊名通玄府)祥符觀之西南二里。",
    "T51n2095_003:1037c13_9": "又有國泰庵。",
    "T51n2095_003:1037c13_10": "庵西上蓮華峯頂十五里。",
    "T51n2095_003:1037c14_11": "至蓮華庵。",
    "T51n2095_003:1037c14_12": "國泰之南五里。",
    "T51n2095_003:1037c15_13": "至報恩庵。",
    "T51n2095_003:1037c15_14": "報恩一里。",
    "T51n2095_003:1037c15_15": "至雲際庵。",
    "T51n2095_003:1037c15_16": "雲際一里。",
    "T51n2095_003:1037c16_17": "至永清庵(一名下蓮華庵)其傍有道人隱居。",
    "T51n2095_003:1037c16_18": "永清之西一里。",
    "T51n2095_003:1037c17_19": "至雲溪庵(一名下蓮華洞)雲溪一里。",
    "T51n2095_003:1037c17_20": "亦至太平觀。",
    "T51n2095_003:1037c18_21": "觀之西五里。",
    "T51n2095_003:1037c18_22": "至東林太平興國寺。",
    "T51n2095_003:1037c18_23": "觀之西南五里。",
    "T51n2095_003:1037c19_24": "又有清泰庵。",
    "T51n2095_003:1037c19_25": "清泰一里。",
    "T51n2095_003:1037c19_26": "至廣澤院(舊名龍潭庵)其上五里。",
    "T51n2095_003:1037c20_27": "至三龍潭。",
    "T51n2095_003:1037c20_28": "廣澤七里。",
    "T51n2095_003:1037c20_29": "亦至東林。",
    "T51n2095_003:1037c21_30": "東林之西百餘步。",
    "T51n2095_003:1037c21_31": "至遠公塔。",
    "T51n2095_003:1037c21_32": "塔西百餘步。",
    "T51n2095_003:1037c22_33": "至西林乾明寺。",
    "T51n2095_003:1037c22_34": "西林之東五里。",
    "T51n2095_003:1037c22_35": "至黃土庵。",
    "T51n2095_003:1037c23_0": "其傍有看經庵。",
    "T51n2095_003:1037c23_1": "看經一里。",
    "T51n2095_003:1037c23_2": "至崇福庵。",
    "T51n2095_003:1037c23_3": "崇福五里。",
    "T51n2095_003:1037c24_4": "至香城庵。",
    "T51n2095_003:1037c24_5": "其傍有觀音庵東庵。",
    "T51n2095_003:1037c24_6": "東庵之下一里。",
    "T51n2095_003:1037c25_7": "至廣濟庵。",
    "T51n2095_003:1037c25_8": "廣濟半里。",
    "T51n2095_003:1037c25_9": "至聖僧巖。",
    "T51n2095_003:1037c25_10": "聖僧巖二里。",
    "T51n2095_003:1037c26_11": "至石盆庵。",
    "T51n2095_003:1037c26_12": "西林之東南五里。",
    "T51n2095_003:1037c26_13": "又有下化成院。",
    "T51n2095_003:1037c27_14": "下化成三里。",
    "T51n2095_003:1037c27_15": "至護國。",
    "T51n2095_003:1037c27_16": "庵護國一里。",
    "T51n2095_003:1037c27_17": "亦至石盆庵。",
    "T51n2095_003:1037c28_18": "石盆之上半里。",
    "T51n2095_003:1037c28_19": "至保興庵。",
    "T51n2095_003:1037c28_20": "保興半里。",
    "T51n2095_003:1037c29_0": "至上化成普照寺。",
    "T51n2095_003:1037c29_1": "其傍有大師庵。",
    "T51n2095_003:1037c29_2": "上化成之上十里。",
    "T51n2095_003:1038a01_3": "過香爐峯。",
    "T51n2095_003:1038a01_4": "至峯頂庵。",
    "T51n2095_003:1038a01_5": "峯頂之南十里。",
    "T51n2095_003:1038a02_0": "有香積庵。",
    "T51n2095_003:1038a02_1": "有路下山南棲賢澗東之萬壽源二十里而險。",
    "T51n2095_003:1038a03_2": "峯頂之西五里。",
    "T51n2095_003:1038a03_3": "至寶林寺(舊名大林)寶林一里。",
    "T51n2095_003:1038a04_4": "至擲筆峯。",
    "T51n2095_003:1038a04_5": "又一里。",
    "T51n2095_003:1038a04_6": "至佛手巖。",
    "T51n2095_003:1038a04_7": "佛手巖二里。",
    "T51n2095_003:1038a05_8": "至天池院。",
    "T51n2095_003:1038a05_9": "院之南一里。",
    "T51n2095_003:1038a05_10": "至隆禪師塔。",
    "T51n2095_003:1038a05_11": "塔之下二里。",
    "T51n2095_003:1038a06_12": "至新羅庵。",
    "T51n2095_003:1038a06_13": "庵之東二里。",
    "T51n2095_003:1038a06_14": "至十八賢臺。",
    "T51n2095_003:1038a07_15": "由天池下山十五里。",
    "T51n2095_003:1038a07_16": "同名錦繡谷。",
    "T51n2095_003:1038a07_17": "山下之水一出錦繡谷。",
    "T51n2095_003:1038a08_18": "一出石門谷。",
    "T51n2095_003:1038a08_19": "合流入湓江。",
    "T51n2095_003:1038a08_20": "兩水之上有雙龍庵廣福庵尊勝庵保寧庵。",
    "T51n2095_003:1038a09_21": "四庵相望皆不百步。",
    "T51n2095_003:1038a10_22": "石門澗在保寧庵前。",
    "T51n2095_003:1038a10_23": "澗中五里。",
    "T51n2095_003:1038a11_24": "有石柱峯鐵舡峯。",
    "T51n2095_003:1038a11_25": "峯下有二道人庵。",
    "T51n2095_003:1038a11_26": "保寧之南五里。",
    "T51n2095_003:1038a12_27": "至福海庵。",
    "T51n2095_003:1038a12_28": "福海二里。",
    "T51n2095_003:1038a12_29": "至祥雲庵。",
    "T51n2095_003:1038a13_0": "祥雲之上十里。",
    "T51n2095_003:1038a13_1": "至雲頂峯。",
    "T51n2095_003:1038a13_2": "峯頂有雲頂庵。",
    "T51n2095_003:1038a13_3": "祥雲之南八里。",
    "T51n2095_003:1038a14_4": "至月輪庵。",
    "T51n2095_003:1038a14_5": "其傍有靈泉庵。",
    "T51n2095_003:1038a14_6": "靈泉七里。",
    "T51n2095_003:1038a15_7": "至報國庵。",
    "T51n2095_003:1038a15_8": "報國五里。",
    "T51n2095_003:1038a15_9": "至圓通崇勝禪院。",
    "T51n2095_003:1038a16_10": "其側有廣福院。",
    "T51n2095_003:1038a16_11": "圓通二十里。",
    "T51n2095_003:1038a16_12": "至康王景德觀。",
    "T51n2095_003:1038a17_13": "自圓通已上皆隷江州。",
    "T51n2095_003:1038a17_14": "由康王觀之北入谷中五里。",
    "T51n2095_003:1038a18_15": "至龍泉院。",
    "T51n2095_003:1038a18_16": "又二十里。",
    "T51n2095_003:1038a18_17": "至水簾。",
    "T51n2095_003:1038a18_18": "觀之南百步。",
    "T51n2095_003:1038a19_19": "至毘盧庵。",
    "T51n2095_003:1038a19_20": "毘盧二里。",
    "T51n2095_003:1038a19_21": "至大明庵。",
    "T51n2095_003:1038a19_22": "大明二里至長興庵。",
    "T51n2095_003:1038a20_23": "其傍又有仁王院。",
    "T51n2095_003:1038a20_24": "仁王二里。",
    "T51n2095_003:1038a21_0": "至乾壽院。",
    "T51n2095_003:1038a21_1": "乾壽七里。",
    "T51n2095_003:1038a21_2": "至靈湯淨慧禪院。",
    "T51n2095_003:1038a21_3": "淨慧之南十里。",
    "T51n2095_003:1038a22_4": "又有清霞觀。",
    "T51n2095_003:1038a22_5": "淨慧之東二里。",
    "T51n2095_003:1038a22_6": "過康樂經臺又三里。",
    "T51n2095_003:1038a23_7": "至陶公醉石。",
    "T51n2095_003:1038a23_8": "醉石復出官道三里。",
    "T51n2095_003:1038a24_9": "至歸宗承天禪院。",
    "T51n2095_003:1038a24_10": "歸宗之西百步。",
    "T51n2095_003:1038a24_11": "至靈溪祥符觀。",
    "T51n2095_003:1038a25_12": "祥符一里。",
    "T51n2095_003:1038a25_13": "至香泉院。",
    "T51n2095_003:1038a25_14": "次上塔次下塔。",
    "T51n2095_003:1038a26_15": "皆相去百餘步。",
    "T51n2095_003:1038a26_16": "下塔五里。",
    "T51n2095_003:1038a26_17": "至般若臺隆教院。",
    "T51n2095_003:1038a27_18": "其傍有石門庵。",
    "T51n2095_003:1038a27_19": "次布水庵。",
    "T51n2095_003:1038a27_20": "次覺性庵(一名崔師臺)次重巖庵。",
    "T51n2095_003:1038a28_21": "皆相去百餘步。",
    "T51n2095_003:1038a28_22": "重巖三里。",
    "T51n2095_003:1038a28_23": "至謝山人草堂。",
    "T51n2095_003:1038a29_24": "草堂三里。",
    "T51n2095_003:1038a29_25": "至靈棲院。",
    "T51n2095_003:1038a29_26": "靈棲之上百步。",
    "T51n2095_003:1038b01_27": "至紫霄峯頂舍利塔。",
    "T51n2095_003:1038b01_28": "靈棲之下八里。",
    "T51n2095_003:1038b01_29": "至三將軍洞。",
    "T51n2095_003:1038b02_30": "三將軍洞之下入歸宗亦一里。",
    "T51n2095_003:1038b02_31": "靈棲之東四里。",
    "T51n2095_003:1038b03_32": "至重雲庵。",
    "T51n2095_003:1038b03_33": "次萬歲庵。",
    "T51n2095_003:1038b03_34": "次天宮庵。",
    "T51n2095_003:1038b04_35": "皆相去百餘步。",
    "T51n2095_003:1038b04_36": "天宮一里。",
    "T51n2095_003:1038b04_37": "至餘峯庵。",
    "T51n2095_003:1038b04_38": "餘峯之上二十里。",
    "T51n2095_003:1038b05_39": "至白雲洞。",
    "T51n2095_003:1038b05_40": "餘峯之下二里。",
    "T51n2095_003:1038b05_41": "至先天觀(舊名真風)其傍有柳大卿草堂。",
    "T51n2095_003:1038b06_42": "先天二里。",
    "T51n2095_003:1038b07_0": "至太虛簡寂觀。",
    "T51n2095_003:1038b07_1": "簡寂五里。",
    "T51n2095_003:1038b07_2": "至棲隱觀。",
    "T51n2095_003:1038b07_3": "棲隱之東五里。",
    "T51n2095_003:1038b08_4": "至古靈庵。",
    "T51n2095_003:1038b08_5": "古靈十里。",
    "T51n2095_003:1038b08_6": "至開先禪院。",
    "T51n2095_003:1038b09_7": "開先之南一里。",
    "T51n2095_003:1038b09_8": "至石碑庵。",
    "T51n2095_003:1038b09_9": "石碑之上七里。",
    "T51n2095_003:1038b10_0": "至黃石巖永泰院。",
    "T51n2095_003:1038b10_1": "永泰之前半里。",
    "T51n2095_003:1038b10_2": "至文殊臺。",
    "T51n2095_003:1038b11_0": "永泰之上十里。",
    "T51n2095_003:1038b11_1": "有道人庵。",
    "T51n2095_003:1038b11_2": "聖僧巖。",
    "T51n2095_003:1038b11_3": "善才巖。",
    "T51n2095_003:1038b11_4": "羅漢巖。",
    "T51n2095_003:1038b12_5": "黃石巖。",
    "T51n2095_003:1038b12_6": "開先之東二里。",
    "T51n2095_003:1038b12_7": "至萬杉禪院。",
    "T51n2095_003:1038b12_8": "萬杉之東北三里。",
    "T51n2095_003:1038b13_9": "至真教院(舊名雲峯)真教三里。",
    "T51n2095_003:1038b13_10": "至景德院(舊名高遙)景德一里。",
    "T51n2095_003:1038b14_11": "至李徵古書堂。",
    "T51n2095_003:1038b14_12": "書堂之上四里。",
    "T51n2095_003:1038b15_13": "至五乳峯香積院。",
    "T51n2095_003:1038b15_14": "香積二里。",
    "T51n2095_003:1038b15_15": "至俱胝庵。",
    "T51n2095_003:1038b16_16": "其傍有觀音庵。",
    "T51n2095_003:1038b16_17": "觀音半里。",
    "T51n2095_003:1038b16_18": "至齊雲庵。",
    "T51n2095_003:1038b16_19": "齊雲三里。",
    "T51n2095_003:1038b17_20": "至臥龍庵。",
    "T51n2095_003:1038b17_21": "臥龍之下五里。",
    "T51n2095_003:1038b17_22": "至青蓮院(舊名白雲庵)其傍有雲峯院(舊名下偃臺)雲峯五里。",
    "T51n2095_003:1038b18_23": "至道林院。",
    "T51n2095_003:1038b19_24": "道林一里至禪靜院(舊名中興)禪靜一里。",
    "T51n2095_003:1038b19_25": "至保慶庵。",
    "T51n2095_003:1038b20_26": "保慶一里。",
    "T51n2095_003:1038b20_27": "至淨隱院(舊名寶峯)淨隱三里。",
    "T51n2095_003:1038b20_28": "至祖教院(舊名上偃臺)其傍有盤龍庵。",
    "T51n2095_003:1038b21_29": "西源庵。",
    "T51n2095_003:1038b21_30": "寶輪庵。",
    "T51n2095_003:1038b21_31": "皆不百步。",
    "T51n2095_003:1038b22_32": "寶輪三里。",
    "T51n2095_003:1038b22_33": "至椆木庵。",
    "T51n2095_003:1038b22_34": "椆木三里。",
    "T51n2095_003:1038b22_35": "至幽邃庵。",
    "T51n2095_003:1038b23_36": "幽邃一里。",
    "T51n2095_003:1038b23_37": "至赤眼塔。",
    "T51n2095_003:1038b23_38": "塔東北十里。",
    "T51n2095_003:1038b23_39": "至棲賢寶覺禪院。",
    "T51n2095_003:1038b24_40": "南康軍出五老門五里。",
    "T51n2095_003:1038b24_41": "有大衝庵。",
    "T51n2095_003:1038b25_42": "大衝五里。",
    "T51n2095_003:1038b25_43": "亦至羅漢禪院。",
    "T51n2095_003:1038b25_44": "羅漢十里。",
    "T51n2095_003:1038b25_45": "亦至棲賢院。",
    "T51n2095_003:1038b26_46": "羅漢之東五里。",
    "T51n2095_003:1038b26_47": "至折桂僧莊。",
    "T51n2095_003:1038b26_48": "莊西五里。",
    "T51n2095_003:1038b27_49": "至白鹿洞李渤書堂。",
    "T51n2095_003:1038b27_50": "白鹿洞三里。",
    "T51n2095_003:1038b27_51": "至承天白鶴觀。",
    "T51n2095_003:1038b28_52": "白鶴五里。",
    "T51n2095_003:1038b28_53": "亦至棲賢院。",
    "T51n2095_003:1038b28_54": "棲賢之東半里。",
    "T51n2095_003:1038b29_55": "至淨住院(舊名登雲)淨住之東二里。",
    "T51n2095_003:1038b29_56": "至廣壽院(舊名資聖)其傍有金師臺。",
    "T51n2095_003:1038c01_57": "廣壽之北二里。",
    "T51n2095_003:1038c02_0": "至萬壽院。",
    "T51n2095_003:1038c02_1": "萬壽之南三里。",
    "T51n2095_003:1038c02_2": "至楞伽院(舊名下白石)楞伽之上三里。",
    "T51n2095_003:1038c03_3": "至證道院(舊名上白石)證道三里。",
    "T51n2095_003:1038c03_4": "至太平興國院。",
    "T51n2095_003:1038c04_5": "太平一里。",
    "T51n2095_003:1038c04_6": "至上五峯香林院。",
    "T51n2095_003:1038c04_7": "香林五里。",
    "T51n2095_003:1038c05_8": "至淨居院(舊名上庵)淨居五里。",
    "T51n2095_003:1038c05_9": "至下五峯延福院。",
    "T51n2095_003:1038c06_10": "延福三里。",
    "T51n2095_003:1038c06_11": "至竹林院。",
    "T51n2095_003:1038c06_12": "竹林二里。",
    "T51n2095_003:1038c06_13": "至福源庵(舊名靈源)福源半里。",
    "T51n2095_003:1038c07_14": "至石泉庵。",
    "T51n2095_003:1038c07_15": "石泉二里。",
    "T51n2095_003:1038c07_16": "至凌霄巖明真院。",
    "T51n2095_003:1038c08_17": "明真之下五里。",
    "T51n2095_003:1038c08_18": "至淨妙院(舊名德政庵)淨妙一里。",
    "T51n2095_003:1038c09_19": "至雲臺庵。",
    "T51n2095_003:1038c09_20": "雲臺三里。",
    "T51n2095_003:1038c09_21": "至聖果院(舊名淨明)其前有解空院(舊名吉祥)解空之西北百步。",
    "T51n2095_003:1038c10_22": "至谷源庵。",
    "T51n2095_003:1038c11_23": "谷源之東北二里。",
    "T51n2095_003:1038c11_24": "至證寂院(舊名析桂)證寂半里。",
    "T51n2095_003:1038c12_25": "至華嚴院。",
    "T51n2095_003:1038c12_26": "華嚴三里。",
    "T51n2095_003:1038c12_27": "至永福院(舊名龍雲)永福之下八里。",
    "T51n2095_003:1038c13_28": "至大富莊。",
    "T51n2095_003:1038c13_29": "大富莊之東北十里。",
    "T51n2095_003:1038c14_30": "至慧日禪院。",
    "T51n2095_003:1038c14_31": "慧日三里。",
    "T51n2095_003:1038c14_32": "至大雄庵。",
    "T51n2095_003:1038c14_33": "大雄復出官道七里。",
    "T51n2095_003:1038c15_34": "至佛殿庵。",
    "T51n2095_003:1038c15_35": "佛殿一里。",
    "T51n2095_003:1038c15_36": "至興福庵。",
    "T51n2095_003:1038c16_37": "興福三里。",
    "T51n2095_003:1038c16_38": "至智林院(舊名慈雲)智林三里。",
    "T51n2095_003:1038c16_39": "則上吳章嶺。",
    "T51n2095_003:1038c17_40": "江州界也。",
    "T51n2095_003:1038c17_41": "慧日之西南十里。",
    "T51n2095_003:1038c17_42": "至大城庵。",
    "T51n2095_003:1038c18_43": "大城三里。",
    "T51n2095_003:1038c18_44": "至延真昭德觀。",
    "T51n2095_003:1038c18_45": "昭德之前一里。",
    "T51n2095_003:1038c19_46": "至登雲庵。",
    "T51n2095_003:1038c19_47": "其後一里。",
    "T51n2095_003:1038c19_48": "至淨慧院。",
    "T51n2095_003:1038c19_49": "昭德之西出官道二十里。",
    "T51n2095_003:1038c20_50": "至尋真冲虛觀。",
    "T51n2095_003:1038c20_51": "尋真二里。",
    "T51n2095_003:1038c20_52": "至普覺院(舊名長慶)普覺之西十里。",
    "T51n2095_003:1038c21_53": "還至羅漢禪院。",
    "T51n2095_003:1038c22_0": "又自南康落星寺泛舟過釣魚臺一里。",
    "T51n2095_003:1038c22_1": "至明心院(舊名翠嶶)明心五里。",
    "T51n2095_003:1038c23_2": "至楞伽院。",
    "T51n2095_003:1038c23_3": "楞伽五里。",
    "T51n2095_003:1038c23_4": "至善才庵。",
    "T51n2095_003:1038c24_5": "善才三里。",
    "T51n2095_003:1038c24_6": "至凌雲庵(舊名凌雲書堂)凌雲三里。",
    "T51n2095_003:1038c25_7": "亦至萬杉禪院。",
    "T51n2095_003:1038c25_8": "明心之東南五里。",
    "T51n2095_003:1038c25_9": "又至東古法輪院。",
    "T51n2095_003:1038c26_10": "法輪之北十里。",
    "T51n2095_003:1038c26_11": "亦至萬杉。",
    "T51n2095_003:1038c26_12": "又自南康西南出十五里。",
    "T51n2095_003:1038c27_13": "至西古興善院。",
    "T51n2095_003:1038c27_14": "興善十里亦至歸宗。",
    "T51n2095_003:1038c28_15": "凡自南康出建昌門。",
    "T51n2095_003:1038c28_16": "過承天院。",
    "T51n2095_003:1038c28_17": "則問開先路。",
    "T51n2095_003:1038c29_18": "出五老門。",
    "T51n2095_003:1038c29_19": "過望雲亭。",
    "T51n2095_003:1038c29_20": "則問棲賢路云。",
    "T51n2095_003:1039a02_0": "十八賢傳第五",
    "T51n2095_003:1039a03_0": "廬山豈獨水石能冠天下。",
    "T51n2095_003:1039a03_1": "由代有高賢隱居以傳。",
    "T51n2095_003:1039a04_2": "東林寺舊有十八賢傳。",
    "T51n2095_003:1039a04_3": "不知何人所作。",
    "T51n2095_003:1039a05_0": "文字淺近。",
    "T51n2095_003:1039a05_1": "以事驗諸前史。",
    "T51n2095_003:1039a05_2": "往往乖謬。",
    "T51n2095_003:1039a05_3": "讀者陋之。",
    "T51n2095_003:1039a06_4": "使古人風跡用無知者。",
    "T51n2095_003:1039a06_5": "惜哉。",
    "T51n2095_003:1039a06_6": "予既作山記。",
    "T51n2095_003:1039a07_0": "乃因舊本參質晉宋史及高僧傳。",
    "T51n2095_003:1039a07_1": "粗加刊正。",
    "T51n2095_003:1039a08_0": "或舊所脫略。",
    "T51n2095_003:1039a08_1": "今無有可考。",
    "T51n2095_003:1039a08_2": "亦未如之何也。",
    "T51n2095_003:1039a09_0": "社主遠法師",
    "T51n2095_003:1039a10_0": "法師諱慧遠。",
    "T51n2095_003:1039a10_1": "姓賈。",
    "T51n2095_003:1039a10_2": "雁門樓煩人也。",
    "T51n2095_003:1039a10_3": "幼為書生。",
    "T51n2095_003:1039a11_0": "年十三。",
    "T51n2095_003:1039a11_1": "隨舅令狐氏遊學許洛。",
    "T51n2095_003:1039a11_2": "尤善莊老。",
    "T51n2095_003:1039a11_3": "性度弘偉。",
    "T51n2095_003:1039a12_4": "年二十一。",
    "T51n2095_003:1039a12_5": "欲渡江東就范宣子共契嘉遁。",
    "T51n2095_003:1039a13_6": "中原冠亂。",
    "T51n2095_003:1039a13_7": "南路阻塞。",
    "T51n2095_003:1039a13_8": "時沙門釋道安。",
    "T51n2095_003:1039a13_9": "立寺於太行。",
    "T51n2095_003:1039a14_10": "弘贊佛法。",
    "T51n2095_003:1039a14_11": "遂往歸之。",
    "T51n2095_003:1039a14_12": "初聞講般若經。",
    "T51n2095_003:1039a15_13": "豁然大悟。",
    "T51n2095_003:1039a15_14": "乃歎曰。",
    "T51n2095_003:1039a15_15": "儒道九流皆糠粃耳。",
    "T51n2095_003:1039a15_16": "遂與弟慧持投簪落髮。",
    "T51n2095_003:1039a16_17": "委命受業。",
    "T51n2095_003:1039a16_18": "心既入道。",
    "T51n2095_003:1039a16_19": "常以大法為己任。",
    "T51n2095_003:1039a17_20": "慧解夙發。",
    "T51n2095_003:1039a17_21": "神明英越。",
    "T51n2095_003:1039a17_22": "安常歎曰。",
    "T51n2095_003:1039a18_23": "使道流東國。",
    "T51n2095_003:1039a18_24": "其斯遠乎。",
    "T51n2095_003:1039a18_25": "二十四。",
    "T51n2095_003:1039a18_26": "便就講說。",
    "T51n2095_003:1039a19_27": "常有客聞講實相義。",
    "T51n2095_003:1039a19_28": "疑難往復。",
    "T51n2095_003:1039a19_29": "彌用疑塞。",
    "T51n2095_003:1039a20_0": "師為引莊子義為比類。",
    "T51n2095_003:1039a20_1": "惑者大釋。",
    "T51n2095_003:1039a20_2": "於是安之門人獨聽不廢俗書。",
    "T51n2095_003:1039a21_3": "後隨師南遊至襄陽。",
    "T51n2095_003:1039a21_4": "安為朱序所拘。",
    "T51n2095_003:1039a22_5": "眾皆罷去。",
    "T51n2095_003:1039a22_6": "遠乃與弟子數十人適荊州。",
    "T51n2095_003:1039a23_7": "住上明寺。",
    "T51n2095_003:1039a23_8": "後欲往羅浮山。",
    "T51n2095_003:1039a23_9": "太元六年。",
    "T51n2095_003:1039a24_0": "至尋陽。",
    "T51n2095_003:1039a24_1": "愛廬阜之間曠。",
    "T51n2095_003:1039a24_2": "乃立龍泉精舍。",
    "T51n2095_003:1039a24_3": "久之沙門慧永禪師先居西林。",
    "T51n2095_003:1039a25_4": "與師有舊。",
    "T51n2095_003:1039a25_5": "欲邀同止。",
    "T51n2095_003:1039a26_6": "乃謂刺史桓伊曰。",
    "T51n2095_003:1039a26_7": "遠公弘道。",
    "T51n2095_003:1039a26_8": "學者日集。",
    "T51n2095_003:1039a26_9": "貧道所棲。",
    "T51n2095_003:1039a27_10": "狹不足處。",
    "T51n2095_003:1039a27_11": "奈何。",
    "T51n2095_003:1039a27_12": "時又夢山神請曰。",
    "T51n2095_003:1039a27_13": "此山足以棲神。",
    "T51n2095_003:1039a28_14": "一夕忽有雷雨。",
    "T51n2095_003:1039a28_15": "震擊詰朝。",
    "T51n2095_003:1039a28_16": "林麓大闢。",
    "T51n2095_003:1039a29_17": "唯素沙布地。",
    "T51n2095_003:1039a29_18": "兼有楩柟文梓良材。",
    "T51n2095_003:1039a29_19": "桓乃即其地更立房殿。",
    "T51n2095_003:1039b01_20": "名其殿曰神運。",
    "T51n2095_003:1039b01_21": "以在永師所居之東故。",
    "T51n2095_003:1039b02_22": "號東林。",
    "T51n2095_003:1039b02_23": "即太元十一年歲次丙戌寺成。",
    "T51n2095_003:1039b03_24": "先有阿育王文殊之像。",
    "T51n2095_003:1039b03_25": "沈於武昌水中。",
    "T51n2095_003:1039b04_26": "陶侃不能得。",
    "T51n2095_003:1039b04_27": "至是飄然輕舉迎還神運殿。",
    "T51n2095_003:1039b05_0": "以修佛事。",
    "T51n2095_003:1039b05_1": "又因罽賓道人。",
    "T51n2095_003:1039b05_2": "共作佛影臺。",
    "T51n2095_003:1039b05_3": "皆有神感。",
    "T51n2095_003:1039b06_4": "事具高僧傳。",
    "T51n2095_003:1039b06_5": "於是謹律之侶絕塵之客。",
    "T51n2095_003:1039b07_0": "四方不期而至。",
    "T51n2095_003:1039b07_1": "彭城劉遺民。",
    "T51n2095_003:1039b07_2": "豫章雷次宗。",
    "T51n2095_003:1039b07_3": "雁門周續之。",
    "T51n2095_003:1039b08_4": "南陽宗炳張野張詮等。",
    "T51n2095_003:1039b08_5": "凡百有二十三人。",
    "T51n2095_003:1039b09_6": "與師同修淨土之社。",
    "T51n2095_003:1039b09_7": "乃令劉遺民著發願文。",
    "T51n2095_003:1039b10_8": "殷仲堪之任荊州也。",
    "T51n2095_003:1039b10_9": "入山展敬。",
    "T51n2095_003:1039b10_10": "與師松下談易。",
    "T51n2095_003:1039b11_11": "陳郡謝靈運。",
    "T51n2095_003:1039b11_12": "負才傲物。",
    "T51n2095_003:1039b11_13": "少所推重。",
    "T51n2095_003:1039b12_14": "一見肅然心服。",
    "T51n2095_003:1039b12_15": "為鑿東西二池種白蓮。",
    "T51n2095_003:1039b12_16": "求入淨社。",
    "T51n2095_003:1039b13_17": "師以心雜止之。",
    "T51n2095_003:1039b13_18": "范寧在豫章。",
    "T51n2095_003:1039b13_19": "師請入社。",
    "T51n2095_003:1039b14_20": "范不能從。",
    "T51n2095_003:1039b14_21": "姚興與法師羅什皆欽風德。",
    "T51n2095_003:1039b14_22": "遠輸施遺。",
    "T51n2095_003:1039b15_23": "桓玄震主。",
    "T51n2095_003:1039b15_24": "不覺致敬。",
    "T51n2095_003:1039b15_25": "安帝自江陵還都。",
    "T51n2095_003:1039b16_26": "輔國何無忌勸師候覲。",
    "T51n2095_003:1039b16_27": "師稱疾不行。",
    "T51n2095_003:1039b16_28": "帝遣使勞問。",
    "T51n2095_003:1039b17_29": "凡居山三十年。",
    "T51n2095_003:1039b17_30": "影迹不至塵俗。",
    "T51n2095_003:1039b17_31": "每送客以虎溪為界。",
    "T51n2095_003:1039b18_32": "晉義熙十二年歲次丙辰八月初六日順寂。",
    "T51n2095_003:1039b19_33": "春秋八十三。",
    "T51n2095_003:1039b19_34": "初感疾。",
    "T51n2095_003:1039b19_35": "散動林下。",
    "T51n2095_003:1039b20_36": "耆德請飲豉酒米汁。",
    "T51n2095_003:1039b20_37": "皆不許。",
    "T51n2095_003:1039b20_38": "又請以蜜和水為漿。",
    "T51n2095_003:1039b21_39": "師命律師一人。",
    "T51n2095_003:1039b21_40": "披尋律文。",
    "T51n2095_003:1039b21_41": "可否卷未半而終。",
    "T51n2095_003:1039b22_42": "遺命露骸林下。",
    "T51n2095_003:1039b22_43": "既而弟子與尋陽官屬。",
    "T51n2095_003:1039b23_44": "奉葬於西嶺。",
    "T51n2095_003:1039b23_45": "謝靈運銘張野序。",
    "T51n2095_003:1039b23_46": "唐會昌五年乙丑寺廢。",
    "T51n2095_003:1039b24_47": "大中二年戊辰復。",
    "T51n2095_003:1039b24_48": "寺之復也。",
    "T51n2095_003:1039b24_49": "僧正言乞賜旌褒。",
    "T51n2095_003:1039b25_50": "諡曰辯覺大師。",
    "T51n2095_003:1039b25_51": "昇元三年。",
    "T51n2095_003:1039b25_52": "改諡正覺。",
    "T51n2095_003:1039b26_53": "興國三年。",
    "T51n2095_003:1039b26_54": "諡圓悟大師。",
    "T51n2095_003:1039b26_55": "仍名其墳。",
    "T51n2095_003:1039b26_56": "曰凝寂之塔。",
    "T51n2095_003:1039b27_57": "有匡山集二十卷。",
    "T51n2095_003:1039b27_58": "傳于世。",
    "T51n2095_003:1039b28_0": "彭城劉遺民",
    "T51n2095_003:1039b29_0": "劉程之字仲思。",
    "T51n2095_003:1039b29_1": "彭城聚里人。",
    "T51n2095_003:1039b29_2": "漢楚元王之苗裔也。",
    "T51n2095_003:1039c01_3": "歷晉世至卿相。",
    "T51n2095_003:1039c01_4": "程之少孤事母。",
    "T51n2095_003:1039c01_5": "州閭稱孝。",
    "T51n2095_003:1039c02_6": "墳典百家靡不周覽。",
    "T51n2095_003:1039c02_7": "尤好佛理陳郡殷仲堪桓玄等諸賢。",
    "T51n2095_003:1039c03_8": "莫不崇仰。",
    "T51n2095_003:1039c03_9": "解褐府參軍。",
    "T51n2095_003:1039c03_10": "程之既慕遠公名德。",
    "T51n2095_003:1039c04_11": "欲白首同社。",
    "T51n2095_003:1039c04_12": "乃錄尋陽柴桑。",
    "T51n2095_003:1039c05_13": "以為入山之資。",
    "T51n2095_003:1039c05_14": "歲滿棄去。",
    "T51n2095_003:1039c05_15": "結廬西林。",
    "T51n2095_003:1039c05_16": "蔽以榛莽。",
    "T51n2095_003:1039c06_17": "義熙間公侯。",
    "T51n2095_003:1039c06_18": "復辟之皆不應。",
    "T51n2095_003:1039c06_19": "後易名遺民。",
    "T51n2095_003:1039c07_20": "遠公社賢推為上客。",
    "T51n2095_003:1039c07_21": "常貽書關中。",
    "T51n2095_003:1039c07_22": "與什肇二法師通好。",
    "T51n2095_003:1039c08_23": "揚搉經論。",
    "T51n2095_003:1039c08_24": "著念佛三昧詩。",
    "T51n2095_003:1039c08_25": "道德名實諸詞文義之華。",
    "T51n2095_003:1039c09_26": "一時所挹。",
    "T51n2095_003:1039c09_27": "凡居山十有二年。",
    "T51n2095_003:1039c10_28": "自正月感疾。",
    "T51n2095_003:1039c10_29": "便依念佛三昧。",
    "T51n2095_003:1039c10_30": "誦阿彌陀佛。",
    "T51n2095_003:1039c11_31": "至六月初。",
    "T51n2095_003:1039c11_32": "果見白毫相。",
    "T51n2095_003:1039c11_33": "次見佛真影。",
    "T51n2095_003:1039c11_34": "仍摩其頂。",
    "T51n2095_003:1039c12_35": "更作齋福。",
    "T51n2095_003:1039c12_36": "願速盡壽。",
    "T51n2095_003:1039c12_37": "又請僧讀無量壽法華經至二十七日。",
    "T51n2095_003:1039c13_38": "僧眾咸集。",
    "T51n2095_003:1039c13_39": "遺民曰。",
    "T51n2095_003:1039c13_40": "今逝矣。",
    "T51n2095_003:1039c14_41": "予氣盡。",
    "T51n2095_003:1039c14_42": "勿哭以相惱亂。",
    "T51n2095_003:1039c14_43": "又行香。",
    "T51n2095_003:1039c14_44": "請眾僧。",
    "T51n2095_003:1039c15_45": "供養釋迦文佛。",
    "T51n2095_003:1039c15_46": "以謝令我知有阿彌陀佛。",
    "T51n2095_003:1039c16_0": "今日願必迎接。",
    "T51n2095_003:1039c16_1": "少頃合掌。",
    "T51n2095_003:1039c16_2": "西向而逝。",
    "T51n2095_003:1039c16_3": "命子雍積土為墓。",
    "T51n2095_003:1039c17_4": "勿用棺槨。",
    "T51n2095_003:1039c17_5": "當時無不高仰。",
    "T51n2095_003:1039c17_6": "即義熙六年庚戌終。",
    "T51n2095_003:1039c18_7": "春秋五十七。",
    "T51n2095_003:1039c19_0": "豫章雷次宗",
    "T51n2095_003:1039c20_0": "雷次宗字仲倫。",
    "T51n2095_003:1039c20_1": "豫章南昌人。",
    "T51n2095_003:1039c20_2": "博學尤明詩禮。",
    "T51n2095_003:1039c21_0": "不就徵辟。",
    "T51n2095_003:1039c21_1": "入廬山立館東林僧房之東。",
    "T51n2095_003:1039c21_2": "與遠公同社。",
    "T51n2095_003:1039c22_3": "宋文帝元嘉十五年徵。",
    "T51n2095_003:1039c22_4": "至都立學鷄籠山。",
    "T51n2095_003:1039c23_5": "置生員百餘人。",
    "T51n2095_003:1039c23_6": "久之復還廬山。",
    "T51n2095_003:1039c23_7": "公卿祖道後再徵。",
    "T51n2095_003:1039c24_8": "築室鍾山西巖下。",
    "T51n2095_003:1039c24_9": "謂之招隱館。",
    "T51n2095_003:1039c24_10": "猶秉操。",
    "T51n2095_003:1039c25_11": "不入公門。",
    "T51n2095_003:1039c25_12": "每自華林園東林。",
    "T51n2095_003:1039c25_13": "入延賢堂。",
    "T51n2095_003:1039c26_0": "為太子諸王。",
    "T51n2095_003:1039c26_1": "講喪服經。",
    "T51n2095_003:1039c26_2": "元嘉二十五年戊子終。",
    "T51n2095_003:1039c27_3": "春秋六十三。",
    "T51n2095_003:1039c28_0": "雁門周續之",
    "T51n2095_003:1039c29_0": "周續之字道祖。",
    "T51n2095_003:1039c29_1": "雁門廣武人。",
    "T51n2095_003:1039c29_2": "後徙豫章建昌。",
    "T51n2095_003:1040a01_0": "年十二。",
    "T51n2095_003:1040a01_1": "詣范寧受業。",
    "T51n2095_003:1040a01_2": "通五經五緯。",
    "T51n2095_003:1040a01_3": "號十經。",
    "T51n2095_003:1040a01_4": "同門推為顏子。",
    "T51n2095_003:1040a02_5": "劉毅命為參軍。",
    "T51n2095_003:1040a02_6": "又辟博士大尉掾。",
    "T51n2095_003:1040a03_7": "俱不就。",
    "T51n2095_003:1040a03_8": "後入廬山。",
    "T51n2095_003:1040a03_9": "預遠公淨社。",
    "T51n2095_003:1040a03_10": "又與劉遺民陶淵明。",
    "T51n2095_003:1040a04_11": "號尋陽三隱。",
    "T51n2095_003:1040a04_12": "續之不尚峻節。",
    "T51n2095_003:1040a04_13": "江州刺史每相招請。",
    "T51n2095_003:1040a05_14": "亦往從之。",
    "T51n2095_003:1040a05_15": "武帝於東郭外開館待之。",
    "T51n2095_003:1040a06_16": "乘輿降幸。",
    "T51n2095_003:1040a06_17": "問續之禮義。",
    "T51n2095_003:1040a06_18": "辯析精異。",
    "T51n2095_003:1040a07_0": "時號為通隱。",
    "T51n2095_003:1040a07_1": "或問續之。",
    "T51n2095_003:1040a07_2": "時踐王庭何也。",
    "T51n2095_003:1040a07_3": "續之笑曰。",
    "T51n2095_003:1040a08_4": "心馳魏闕者。",
    "T51n2095_003:1040a08_5": "以江湖為桎梏。",
    "T51n2095_003:1040a08_6": "情致兩忘者。",
    "T51n2095_003:1040a09_7": "市朝亦巖穴耳。",
    "T51n2095_003:1040a09_8": "以昇平元年癸亥終于鍾山。",
    "T51n2095_003:1040a10_9": "春秋六十七。",
    "T51n2095_003:1040a11_0": "南陽宗炳",
    "T51n2095_003:1040a12_0": "宗炳字少文。",
    "T51n2095_003:1040a12_1": "南陽涅陽人。",
    "T51n2095_003:1040a12_2": "祖承宜都太守父繇之湘鄉令。",
    "T51n2095_003:1040a13_3": "炳博學善琴書圖畫。",
    "T51n2095_003:1040a13_4": "尤精玄言。",
    "T51n2095_003:1040a14_0": "宋武帝之在荊州也。",
    "T51n2095_003:1040a14_1": "召為主簿。",
    "T51n2095_003:1040a14_2": "不起。",
    "T51n2095_003:1040a14_3": "問其故。",
    "T51n2095_003:1040a15_4": "答曰。",
    "T51n2095_003:1040a15_5": "棲丘飲谷。",
    "T51n2095_003:1040a15_6": "三十餘年矣。",
    "T51n2095_003:1040a15_7": "入廬山築室。",
    "T51n2095_003:1040a16_8": "與遠公同社。",
    "T51n2095_003:1040a16_9": "後兄臧為南平太守。",
    "T51n2095_003:1040a16_10": "逼與俱還。",
    "T51n2095_003:1040a17_11": "乃於江陵三湖立宅。",
    "T51n2095_003:1040a17_12": "後辟參軍太尉掾。",
    "T51n2095_003:1040a17_13": "俱不就。",
    "T51n2095_003:1040a18_14": "乃勅南郡長。",
    "T51n2095_003:1040a18_15": "給吏役。",
    "T51n2095_003:1040a18_16": "數致餼賚。",
    "T51n2095_003:1040a18_17": "南陽王義季親至其室。",
    "T51n2095_003:1040a19_18": "命之角巾布衣引見。",
    "T51n2095_003:1040a19_19": "不拜。",
    "T51n2095_003:1040a19_20": "王曰。",
    "T51n2095_003:1040a20_21": "屈先生以重祿。",
    "T51n2095_003:1040a20_22": "可乎。",
    "T51n2095_003:1040a20_23": "對曰。",
    "T51n2095_003:1040a20_24": "祿如腐草。",
    "T51n2095_003:1040a20_25": "衰盛幾何。",
    "T51n2095_003:1040a21_26": "雅好山水。",
    "T51n2095_003:1040a21_27": "往輒忘歸。",
    "T51n2095_003:1040a21_28": "甞西陟荊巫。",
    "T51n2095_003:1040a21_29": "南登衡岳。",
    "T51n2095_003:1040a22_30": "晚年盡圖之於室曰。",
    "T51n2095_003:1040a22_31": "吾老矣。",
    "T51n2095_003:1040a22_32": "名山不可再覩。",
    "T51n2095_003:1040a23_33": "唯澄懷觀道。",
    "T51n2095_003:1040a23_34": "臥以遊之。",
    "T51n2095_003:1040a23_35": "撫琴動操。",
    "T51n2095_003:1040a23_36": "欲令眾山皆響。",
    "T51n2095_003:1040a24_37": "元嘉二十四年癸未終。",
    "T51n2095_003:1040a24_38": "春秋六十九。",
    "T51n2095_003:1040a26_0": "南陽張野",
    "T51n2095_003:1040a27_0": "張野字萊民。",
    "T51n2095_003:1040a27_1": "南陽宛人也。",
    "T51n2095_003:1040a27_2": "後徙潯陽柴桑。",
    "T51n2095_003:1040a27_3": "與陶元亮通婚姻。",
    "T51n2095_003:1040a28_4": "學兼華竺善屬文。",
    "T51n2095_003:1040a28_5": "州舉秀才。",
    "T51n2095_003:1040a29_0": "南中郎府功曹州治中後徵散騎常侍。",
    "T51n2095_003:1040a29_1": "俱不就。",
    "T51n2095_003:1040b01_2": "天資孝友。",
    "T51n2095_003:1040b01_3": "田宅舊業悉推與弟。",
    "T51n2095_003:1040b01_4": "一味之甘一庾之粟。",
    "T51n2095_003:1040b02_5": "共九族分之。",
    "T51n2095_003:1040b02_6": "衣食躬自菲薄。",
    "T51n2095_003:1040b02_7": "人不堪其憂。",
    "T51n2095_003:1040b03_8": "不改其樂。",
    "T51n2095_003:1040b03_9": "凡所著述傳於世萬餘言。",
    "T51n2095_003:1040b04_0": "師敬遠公。",
    "T51n2095_003:1040b04_1": "與劉雷同轍。",
    "T51n2095_003:1040b04_2": "遠公卒葬西嶺。",
    "T51n2095_003:1040b04_3": "謝靈運為銘。",
    "T51n2095_003:1040b05_4": "野序之。",
    "T51n2095_003:1040b05_5": "稱門人焉。",
    "T51n2095_003:1040b05_6": "義熙十四年戊午終。",
    "T51n2095_003:1040b06_7": "春秋六十九。",
    "T51n2095_003:1040b07_0": "南陽張詮",
    "T51n2095_003:1040b08_0": "張詮字秀碩。",
    "T51n2095_003:1040b08_1": "萊民之族人也。",
    "T51n2095_003:1040b08_2": "情性高逸。",
    "T51n2095_003:1040b08_3": "酷嗜墳籍。",
    "T51n2095_003:1040b09_4": "雖耕鋤猶帶經自樂。",
    "T51n2095_003:1040b09_5": "朝廷以散騎常侍徵。",
    "T51n2095_003:1040b10_6": "不赴。",
    "T51n2095_003:1040b10_7": "庾悅以其家貧。",
    "T51n2095_003:1040b10_8": "以尋陽令祿之。",
    "T51n2095_003:1040b10_9": "笑曰。",
    "T51n2095_003:1040b11_10": "古人正以容膝為安。",
    "T51n2095_003:1040b11_11": "屈吾志亦何榮乎。",
    "T51n2095_003:1040b11_12": "竟不就。",
    "T51n2095_003:1040b12_13": "入廬山。",
    "T51n2095_003:1040b12_14": "依遠公淨社。",
    "T51n2095_003:1040b12_15": "宋景平元年癸亥終。",
    "T51n2095_003:1040b13_16": "春秋六十五。",
    "T51n2095_003:1040b14_0": "西林覺寂大師",
    "T51n2095_003:1040b15_0": "大師諱慧永。",
    "T51n2095_003:1040b15_1": "姓繁。",
    "T51n2095_003:1040b15_2": "河內人也。",
    "T51n2095_003:1040b15_3": "年十二。",
    "T51n2095_003:1040b15_4": "事沙門竺曇現。",
    "T51n2095_003:1040b16_5": "慧悟宿習內外典籍。",
    "T51n2095_003:1040b16_6": "無不洞達。",
    "T51n2095_003:1040b16_7": "於佛事中。",
    "T51n2095_003:1040b17_8": "習禪為樂。",
    "T51n2095_003:1040b17_9": "先與遠師同依道安於恒山。",
    "T51n2095_003:1040b18_10": "亦約結宇羅浮。",
    "T51n2095_003:1040b18_11": "永師先止尋陽。",
    "T51n2095_003:1040b18_12": "即晉太元之初也。",
    "T51n2095_003:1040b19_13": "刺史陶範挹其道風。",
    "T51n2095_003:1040b19_14": "宛如夙契。",
    "T51n2095_003:1040b19_15": "於是留憩廬山。",
    "T51n2095_003:1040b20_16": "捨宅棲止。",
    "T51n2095_003:1040b20_17": "師貞素自然。",
    "T51n2095_003:1040b20_18": "清心剋己。",
    "T51n2095_003:1040b21_0": "言常含笑。",
    "T51n2095_003:1040b21_1": "語不傷物。",
    "T51n2095_003:1040b21_2": "又別立一苑室於嶺上。",
    "T51n2095_003:1040b22_0": "每欲禪思。",
    "T51n2095_003:1040b22_1": "輒往居焉。",
    "T51n2095_003:1040b22_2": "所居甞有香馥之氣。",
    "T51n2095_003:1040b22_3": "因號香谷。",
    "T51n2095_003:1040b23_4": "屋中甞有一虎。",
    "T51n2095_003:1040b23_5": "人或畏者驅之上山。",
    "T51n2095_003:1040b24_0": "人去還復馴伏。",
    "T51n2095_003:1040b24_1": "後遠師龍泉學徒漸眾。",
    "T51n2095_003:1040b24_2": "師要同憩香谷。",
    "T51n2095_003:1040b25_3": "又感神夢之異。",
    "T51n2095_003:1040b25_4": "桓伊立寺東林。",
    "T51n2095_003:1040b25_5": "乃號西林焉。",
    "T51n2095_003:1040b26_6": "鎮國將軍何無忌作鎮尋陽。",
    "T51n2095_003:1040b26_7": "每至瞻禮盡其誠敬。",
    "T51n2095_003:1040b27_8": "師專意淨土之行。",
    "T51n2095_003:1040b27_9": "以晉義熙十年甲寅。",
    "T51n2095_003:1040b28_10": "遇疾綿篤。",
    "T51n2095_003:1040b28_11": "一日忽起。",
    "T51n2095_003:1040b28_12": "斂衣合掌。",
    "T51n2095_003:1040b28_13": "求屣欲起。",
    "T51n2095_003:1040b29_14": "如有所見。",
    "T51n2095_003:1040b29_15": "眾咸驚問答云。",
    "T51n2095_003:1040b29_16": "佛來。",
    "T51n2095_003:1040b29_17": "言終而逝。",
    "T51n2095_003:1040c01_18": "春秋八十三。",
    "T51n2095_003:1040c01_19": "山中聞其香不絕者七日。",
    "T51n2095_003:1040c02_20": "奉全身葬於本寺西二百步。",
    "T51n2095_003:1040c02_21": "南唐元宗重建塔亭。",
    "T51n2095_003:1040c03_22": "尋降焚黃。",
    "T51n2095_003:1040c03_23": "追諡覺寂大師實智之塔。",
    "T51n2095_003:1040c04_0": "東林普濟大師",
    "T51n2095_003:1040c05_0": "竺道生本姓魏。",
    "T51n2095_003:1040c05_1": "鉅鹿人也。",
    "T51n2095_003:1040c05_2": "寓居彭城。",
    "T51n2095_003:1040c05_3": "家世士族父廣。",
    "T51n2095_003:1040c06_4": "道生生而頴悟。",
    "T51n2095_003:1040c06_5": "聰哲若神。",
    "T51n2095_003:1040c06_6": "其父知非凡器。",
    "T51n2095_003:1040c07_7": "愛而異之。",
    "T51n2095_003:1040c07_8": "後從沙門竺法汰出家。",
    "T51n2095_003:1040c07_9": "遂用竺為氏。",
    "T51n2095_003:1040c08_10": "既踐法門。",
    "T51n2095_003:1040c08_11": "俊思奇拔。",
    "T51n2095_003:1040c08_12": "研味句義。",
    "T51n2095_003:1040c08_13": "觸類開解。",
    "T51n2095_003:1040c09_14": "年十五。",
    "T51n2095_003:1040c09_15": "便登講坐。",
    "T51n2095_003:1040c09_16": "吐納問答。",
    "T51n2095_003:1040c09_17": "如貫珠玉年二十。",
    "T51n2095_003:1040c10_18": "器鑒日深。",
    "T51n2095_003:1040c10_19": "義熙七年辛亥。",
    "T51n2095_003:1040c10_20": "初入廬山。",
    "T51n2095_003:1040c11_21": "幽棲七年。",
    "T51n2095_003:1040c11_22": "以求其志。",
    "T51n2095_003:1040c11_23": "常以入道之要。",
    "T51n2095_003:1040c11_24": "慧解為本。",
    "T51n2095_003:1040c12_25": "故鑽仰群經。",
    "T51n2095_003:1040c12_26": "斟酌雜義。",
    "T51n2095_003:1040c12_27": "萬里隨法。",
    "T51n2095_003:1040c12_28": "不憚疲苦。",
    "T51n2095_003:1040c13_29": "乃經長安。",
    "T51n2095_003:1040c13_30": "羅什受業。",
    "T51n2095_003:1040c13_31": "關中僧眾咸謂神悟。",
    "T51n2095_003:1040c14_32": "後還都止青霞寺。",
    "T51n2095_003:1040c14_33": "校閱真俗。",
    "T51n2095_003:1040c14_34": "研思因果。",
    "T51n2095_003:1040c14_35": "乃云。",
    "T51n2095_003:1040c15_36": "善不受報頓悟成佛。",
    "T51n2095_003:1040c15_37": "性常有論。",
    "T51n2095_003:1040c15_38": "法身無色論。",
    "T51n2095_003:1040c16_39": "有無淨土緣論等。",
    "T51n2095_003:1040c16_40": "籠罩舊說。",
    "T51n2095_003:1040c16_41": "妙有淵旨。",
    "T51n2095_003:1040c16_42": "而守文之徒嫌嫉紛起。",
    "T51n2095_003:1040c17_43": "又六卷泥洹經。",
    "T51n2095_003:1040c17_44": "先至京都。",
    "T51n2095_003:1040c18_45": "說阿闡提人皆得成佛。",
    "T51n2095_003:1040c18_46": "于時大本未傳。",
    "T51n2095_003:1040c18_47": "孤明先發獨見忤眾。",
    "T51n2095_003:1040c19_48": "於是舊學以為邪說。",
    "T51n2095_003:1040c19_49": "擯而遣之。",
    "T51n2095_003:1040c20_50": "師乃正容誓曰。",
    "T51n2095_003:1040c20_51": "若我所說反於經義者。",
    "T51n2095_003:1040c21_52": "請於見身示以厲疾。",
    "T51n2095_003:1040c21_53": "若與實相不相違背。",
    "T51n2095_003:1040c22_0": "願捨識之時。",
    "T51n2095_003:1040c22_1": "踞師子座。",
    "T51n2095_003:1040c22_2": "言竟拂衣而去。",
    "T51n2095_003:1040c22_3": "入吳郡虎丘山。",
    "T51n2095_003:1040c23_4": "旬日之中。",
    "T51n2095_003:1040c23_5": "學徒數百人。",
    "T51n2095_003:1040c23_6": "其年夏。",
    "T51n2095_003:1040c23_7": "雷震于青園佛殿。",
    "T51n2095_003:1040c24_8": "龍昇于天。",
    "T51n2095_003:1040c24_9": "識者默歎曰。",
    "T51n2095_003:1040c24_10": "龍既去。",
    "T51n2095_003:1040c25_11": "生必行矣。",
    "T51n2095_003:1040c25_12": "師果辭眾。",
    "T51n2095_003:1040c25_13": "復還廬山。",
    "T51n2095_003:1040c25_14": "銷影巖岫。",
    "T51n2095_003:1040c26_15": "後涅槃大本至于南京。",
    "T51n2095_003:1040c26_16": "果稱闡提悉有佛性。",
    "T51n2095_003:1040c27_17": "與前所說若合符契。",
    "T51n2095_003:1040c27_18": "師既獲斯經。",
    "T51n2095_003:1040c27_19": "尋復講說。",
    "T51n2095_003:1040c28_20": "以宋元嘉十一年甲戌冬十月。",
    "T51n2095_003:1040c28_21": "於廬山精舍法座講說。",
    "T51n2095_003:1040c29_22": "大眾悚聽。",
    "T51n2095_003:1040c29_23": "法席將畢。",
    "T51n2095_003:1040c29_24": "忽見麈尾紛然而墜。",
    "T51n2095_003:1041a01_25": "端坐正容。",
    "T51n2095_003:1041a01_26": "隱几而逝。",
    "T51n2095_003:1041a01_27": "顏色不異。",
    "T51n2095_003:1041a01_28": "宛若入定。",
    "T51n2095_003:1041a02_29": "道俗嗟駭。",
    "T51n2095_003:1041a02_30": "京師諸師聞者悉皆懺悔信伏。",
    "T51n2095_003:1041a03_31": "葬于廬山之阜。",
    "T51n2095_003:1041a03_32": "王微以生比郭林宗。",
    "T51n2095_003:1041a03_33": "乃為立傳。",
    "T51n2095_003:1041a04_34": "述其遺德。",
    "T51n2095_003:1041a04_35": "元宗詔建堂造塔。",
    "T51n2095_003:1041a04_36": "追諡普濟大師法施之塔。",
    "T51n2095_003:1041a06_0": "釋慧持法師",
    "T51n2095_003:1041a07_0": "慧持者。",
    "T51n2095_003:1041a07_1": "遠師之弟也。",
    "T51n2095_003:1041a07_2": "冲然有遠量。",
    "T51n2095_003:1041a07_3": "年十四學讀書。",
    "T51n2095_003:1041a08_4": "一日所記。",
    "T51n2095_003:1041a08_5": "常敵人之十日。",
    "T51n2095_003:1041a08_6": "善文史。",
    "T51n2095_003:1041a08_7": "巧才製。",
    "T51n2095_003:1041a09_8": "年十八出家。",
    "T51n2095_003:1041a09_9": "與兄同事道安法師。",
    "T51n2095_003:1041a09_10": "遍學眾經。",
    "T51n2095_003:1041a10_11": "遊丑三藏。",
    "T51n2095_003:1041a10_12": "形長八尺。",
    "T51n2095_003:1041a10_13": "風神俊爽。",
    "T51n2095_003:1041a10_14": "常躡革屣。",
    "T51n2095_003:1041a11_15": "衲衣半脛。",
    "T51n2095_003:1041a11_16": "始同居東林之淨社。",
    "T51n2095_003:1041a11_17": "廬山徒屬往來三千。",
    "T51n2095_003:1041a12_18": "持為上首。",
    "T51n2095_003:1041a12_19": "羅什在關中。",
    "T51n2095_003:1041a12_20": "遙相欽敬。",
    "T51n2095_003:1041a13_0": "至隆安三年。",
    "T51n2095_003:1041a13_1": "持欲觀矚峨嵋。",
    "T51n2095_003:1041a13_2": "振錫岷岫。",
    "T51n2095_003:1041a13_3": "乃辭遠師。",
    "T51n2095_003:1041a14_4": "入蜀。",
    "T51n2095_003:1041a14_5": "遠師苦留。",
    "T51n2095_003:1041a14_6": "不可。",
    "T51n2095_003:1041a14_7": "嘆曰。",
    "T51n2095_003:1041a14_8": "人生愛聚。",
    "T51n2095_003:1041a15_0": "汝獨樂離。",
    "T51n2095_003:1041a15_1": "持曰。",
    "T51n2095_003:1041a15_2": "若滯情愛聚者。",
    "T51n2095_003:1041a15_3": "本不應出家。",
    "T51n2095_003:1041a16_0": "今既割愛求道。",
    "T51n2095_003:1041a16_1": "正以西方為期耳。",
    "T51n2095_003:1041a16_2": "於是悵然而別。",
    "T51n2095_003:1041a17_3": "過荊州。",
    "T51n2095_003:1041a17_4": "殷仲堪桓玄皆加禮遇欲留。",
    "T51n2095_003:1041a17_5": "不可。",
    "T51n2095_003:1041a18_6": "至蜀成都郫縣龍淵寺。",
    "T51n2095_003:1041a18_7": "昇持堂者。",
    "T51n2095_003:1041a18_8": "皆號登龍門。",
    "T51n2095_003:1041a19_9": "譙縱之亂從子道福凶悖尤甚。",
    "T51n2095_003:1041a19_10": "入寺人馬浴血。",
    "T51n2095_003:1041a20_11": "眾僧怖走。",
    "T51n2095_003:1041a20_12": "持神色盥洗無忤。",
    "T51n2095_003:1041a20_13": "道福見之。",
    "T51n2095_003:1041a21_14": "愧悔汗流。",
    "T51n2095_003:1041a21_15": "謂左右曰。",
    "T51n2095_003:1041a21_16": "大人故與眾異。",
    "T51n2095_003:1041a21_17": "以義熙八年壬子順寂。",
    "T51n2095_003:1041a22_18": "春秋七十二。",
    "T51n2095_003:1041a23_0": "罽賓佛馱耶舍尊者",
    "T51n2095_003:1041a24_0": "佛馱耶舍此云覺明。",
    "T51n2095_003:1041a24_1": "罽賓國大婆羅門種也。",
    "T51n2095_003:1041a25_0": "年十三。",
    "T51n2095_003:1041a25_1": "隨師游於曠野。",
    "T51n2095_003:1041a25_2": "與虎相遇。",
    "T51n2095_003:1041a25_3": "師欲避之。",
    "T51n2095_003:1041a26_0": "耶舍曰。",
    "T51n2095_003:1041a26_1": "此虎已飽。",
    "T51n2095_003:1041a26_2": "必不食人。",
    "T51n2095_003:1041a26_3": "俄而虎去。",
    "T51n2095_003:1041a26_4": "中道果見餘食。",
    "T51n2095_003:1041a27_5": "師密異之。",
    "T51n2095_003:1041a27_6": "年十五。",
    "T51n2095_003:1041a27_7": "誦大乘經百萬言。",
    "T51n2095_003:1041a28_8": "猶為沙彌。",
    "T51n2095_003:1041a28_9": "乃學五明論。",
    "T51n2095_003:1041a28_10": "世間法術多所練習。",
    "T51n2095_003:1041a29_11": "然性簡傲。",
    "T51n2095_003:1041a29_12": "謂少堪己師。",
    "T51n2095_003:1041a29_13": "年二十七。",
    "T51n2095_003:1041a29_14": "方受具戒。",
    "T51n2095_003:1041b01_15": "讀誦手常不釋卷。",
    "T51n2095_003:1041b01_16": "每端坐思義。",
    "T51n2095_003:1041b01_17": "猶以虛度日景為歎。",
    "T51n2095_003:1041b02_18": "其專精如此。",
    "T51n2095_003:1041b02_19": "在沙勒與羅什甚相尊敬。",
    "T51n2095_003:1041b03_20": "後入龜茲。",
    "T51n2095_003:1041b03_21": "法化甚盛。",
    "T51n2095_003:1041b03_22": "時羅什已為呂光所執。",
    "T51n2095_003:1041b04_23": "什在姑臧。",
    "T51n2095_003:1041b04_24": "遣信要之。",
    "T51n2095_003:1041b04_25": "耶舍欲從之。",
    "T51n2095_003:1041b04_26": "恐為國人所留。",
    "T51n2095_003:1041b05_27": "乃取清水一鉢。",
    "T51n2095_003:1041b05_28": "以藥投中。",
    "T51n2095_003:1041b05_29": "呪數十言。",
    "T51n2095_003:1041b06_30": "與弟子洗足。",
    "T51n2095_003:1041b06_31": "即便夜發。",
    "T51n2095_003:1041b06_32": "比旦行數百里。",
    "T51n2095_003:1041b06_33": "國人追之不及。",
    "T51n2095_003:1041b07_34": "問弟子曰。",
    "T51n2095_003:1041b07_35": "何所覺耶。",
    "T51n2095_003:1041b07_36": "曰唯聞疾風之響。",
    "T51n2095_003:1041b08_37": "而眼有淚耳。",
    "T51n2095_003:1041b08_38": "耶舍又為呪水洗足乃止。",
    "T51n2095_003:1041b09_39": "達姑臧。",
    "T51n2095_003:1041b09_40": "什公已入長安。",
    "T51n2095_003:1041b09_41": "乃請姚興迎之。",
    "T51n2095_003:1041b09_42": "別立新省於逍遙園。",
    "T51n2095_003:1041b10_43": "與什對譯十住婆娑等論。",
    "T51n2095_003:1041b11_0": "耶舍髭赤。",
    "T51n2095_003:1041b11_1": "時人號為赤髭論主。",
    "T51n2095_003:1041b11_2": "前後贈遺四事供養並不受。",
    "T51n2095_003:1041b12_3": "時至分衛。",
    "T51n2095_003:1041b12_4": "一食而已。",
    "T51n2095_003:1041b12_5": "衣鉢臥具滿屋三間。",
    "T51n2095_003:1041b13_6": "不以關心。",
    "T51n2095_003:1041b13_7": "姚興為貨之。",
    "T51n2095_003:1041b13_8": "城南造寺。",
    "T51n2095_003:1041b14_9": "耶舍先誦曇無德律。",
    "T51n2095_003:1041b14_10": "興疑其謬。",
    "T51n2095_003:1041b14_11": "乃試令誦羌籍藥方。",
    "T51n2095_003:1041b15_12": "可五萬言。",
    "T51n2095_003:1041b15_13": "經二日。",
    "T51n2095_003:1041b15_14": "執文覆之。",
    "T51n2095_003:1041b16_15": "不誤一字。",
    "T51n2095_003:1041b16_16": "眾伏其強記。",
    "T51n2095_003:1041b16_17": "弘始中譯出四分律為秦言。",
    "T51n2095_003:1041b17_18": "晉義熙八年壬子。",
    "T51n2095_003:1041b17_19": "入廬山。",
    "T51n2095_003:1041b17_20": "為遠公預社之客。",
    "T51n2095_003:1041b18_21": "後辭還本國。",
    "T51n2095_003:1041b18_22": "自罽賓以虛空藏經一卷附賈客。",
    "T51n2095_003:1041b19_23": "至于涼州。",
    "T51n2095_003:1041b19_24": "莫知所終。",
    "T51n2095_003:1041b20_0": "罽賓佛馱跋陀羅尊者",
    "T51n2095_003:1041b21_0": "佛馱跋陀羅。",
    "T51n2095_003:1041b21_1": "漢云覺賢。",
    "T51n2095_003:1041b21_2": "本姓釋氏。",
    "T51n2095_003:1041b21_3": "迦維羅衛國人。",
    "T51n2095_003:1041b22_4": "甘露梵王之苗裔。",
    "T51n2095_003:1041b22_5": "覺賢三歲而喪母。",
    "T51n2095_003:1041b22_6": "五歲而喪父。",
    "T51n2095_003:1041b23_7": "為外氏所養。",
    "T51n2095_003:1041b23_8": "從祖鳩摩婆利聞其聰悟。",
    "T51n2095_003:1041b24_9": "乃迎還度為沙彌。",
    "T51n2095_003:1041b24_10": "年十七。",
    "T51n2095_003:1041b24_11": "與同學數人俱以習誦為業。",
    "T51n2095_003:1041b25_12": "人一月所誦。",
    "T51n2095_003:1041b25_13": "賢一日誦之。",
    "T51n2095_003:1041b25_14": "師歎曰。",
    "T51n2095_003:1041b26_15": "賢一日敵三十夫也。",
    "T51n2095_003:1041b26_16": "及具戒。",
    "T51n2095_003:1041b26_17": "博學群經。",
    "T51n2095_003:1041b27_18": "多所通達。",
    "T51n2095_003:1041b27_19": "少以禪律馳名。",
    "T51n2095_003:1041b27_20": "與同社學僧伽達多。",
    "T51n2095_003:1041b28_21": "共遊罽賓國。",
    "T51n2095_003:1041b28_22": "達多雖伏其才明。",
    "T51n2095_003:1041b28_23": "而未測其人也。",
    "T51n2095_003:1041b29_24": "後於密室禪坐。",
    "T51n2095_003:1041b29_25": "忽見賢來。",
    "T51n2095_003:1041b29_26": "達多驚問其意。",
    "T51n2095_003:1041c01_27": "答曰。",
    "T51n2095_003:1041c01_28": "暫至兜率。",
    "T51n2095_003:1041c01_29": "致敬彌勒。",
    "T51n2095_003:1041c01_30": "言訖便隱。",
    "T51n2095_003:1041c02_31": "達多乃知其神。",
    "T51n2095_003:1041c02_32": "其後益見神變。",
    "T51n2095_003:1041c02_33": "乃敬心祈問。",
    "T51n2095_003:1041c03_34": "方知其得不還果也。",
    "T51n2095_003:1041c03_35": "賢喜遊方弘化。",
    "T51n2095_003:1041c03_36": "乃度葱嶺。",
    "T51n2095_003:1041c04_37": "歷六國。",
    "T51n2095_003:1041c04_38": "自交趾附舶。",
    "T51n2095_003:1041c04_39": "循海至青州東萊郡。",
    "T51n2095_003:1041c05_40": "聞鳩摩羅什在長安。",
    "T51n2095_003:1041c05_41": "即往從之。",
    "T51n2095_003:1041c05_42": "什大喜。",
    "T51n2095_003:1041c05_43": "相與共發玄旨。",
    "T51n2095_003:1041c06_44": "多所推伏。",
    "T51n2095_003:1041c06_45": "後至廬山。",
    "T51n2095_003:1041c06_46": "遠師久服風聞。",
    "T51n2095_003:1041c07_47": "傾蓋如舊。",
    "T51n2095_003:1041c07_48": "於香谷後山。",
    "T51n2095_003:1041c07_49": "茇舍而居。",
    "T51n2095_003:1041c07_50": "自是江東始耽禪悅。",
    "T51n2095_003:1041c08_51": "安帝義熙十四年。",
    "T51n2095_003:1041c08_52": "先有沙門。",
    "T51n2095_003:1041c09_0": "於于闐國。",
    "T51n2095_003:1041c09_1": "得華嚴經前分三萬六千偈。",
    "T51n2095_003:1041c09_2": "未有宣譯。",
    "T51n2095_003:1041c10_3": "乃迎師。",
    "T51n2095_003:1041c10_4": "赴道場寺為譯主。",
    "T51n2095_003:1041c10_5": "與吳郡內史孟顗右衛將軍褚叔度沙門法業等。",
    "T51n2095_003:1041c11_6": "詮定文旨。",
    "T51n2095_003:1041c12_7": "會通華梵。",
    "T51n2095_003:1041c12_8": "妙得經意。",
    "T51n2095_003:1041c12_9": "及先後譯出觀佛三昧海等經論。",
    "T51n2095_003:1041c13_10": "九十五部一百十有七卷。",
    "T51n2095_003:1041c13_11": "並行於世。",
    "T51n2095_003:1041c14_12": "以元嘉六年歸寂于建鄴。",
    "T51n2095_003:1041c14_13": "春秋七十一。",
    "T51n2095_003:1041c15_0": "賢有釋迦舍利三粒。",
    "T51n2095_003:1041c15_1": "自隨因葬北嶺。",
    "T51n2095_003:1041c15_2": "仍建塔焉。",
    "T51n2095_003:1041c17_0": "釋慧叡法師",
    "T51n2095_003:1041c18_0": "慧叡冀州人也。",
    "T51n2095_003:1041c18_1": "少出家。",
    "T51n2095_003:1041c18_2": "執節清峻。",
    "T51n2095_003:1041c18_3": "博學遊方。",
    "T51n2095_003:1041c19_4": "遊歷諸國。",
    "T51n2095_003:1041c19_5": "至南天竺界。",
    "T51n2095_003:1041c19_6": "音譯詁訓。",
    "T51n2095_003:1041c19_7": "殊方異義。",
    "T51n2095_003:1041c20_8": "無不洞曉。",
    "T51n2095_003:1041c20_9": "還憩廬山。",
    "T51n2095_003:1041c20_10": "入遠師淨社。",
    "T51n2095_003:1041c20_11": "常適京師。",
    "T51n2095_003:1041c21_12": "止烏衣寺。",
    "T51n2095_003:1041c21_13": "講說皆思徹言表。",
    "T51n2095_003:1041c21_14": "宋彭城王義康請入第受戒。",
    "T51n2095_003:1041c22_15": "叡曰。",
    "T51n2095_003:1041c22_16": "禮聞來學。",
    "T51n2095_003:1041c22_17": "義康大慚。",
    "T51n2095_003:1041c23_0": "乃入寺虔禮以奉戒法。",
    "T51n2095_003:1041c23_1": "後以貂。",
    "T51n2095_003:1041c23_2": "裘奉叡。",
    "T51n2095_003:1041c23_3": "叡不服。",
    "T51n2095_003:1041c24_4": "常坐之。",
    "T51n2095_003:1041c24_5": "王密令左右買以三十萬錢。",
    "T51n2095_003:1041c24_6": "叡曰。",
    "T51n2095_003:1041c25_0": "雖非所服。",
    "T51n2095_003:1041c25_1": "大王所施。",
    "T51n2095_003:1041c25_2": "聊為從用耳。",
    "T51n2095_003:1041c25_3": "謝靈運篤好佛理。",
    "T51n2095_003:1041c26_4": "殊俗之音多所達解。",
    "T51n2095_003:1041c26_5": "乃以經中諸字并眾音證於叡。",
    "T51n2095_003:1041c27_6": "著十四音訓。",
    "T51n2095_003:1041c27_7": "敘條例。",
    "T51n2095_003:1041c27_8": "梵漢昭然可了。",
    "T51n2095_003:1041c28_9": "使文字有據。",
    "T51n2095_003:1041c28_10": "以宋元嘉十六年己卯順寂。",
    "T51n2095_003:1041c29_11": "春秋八十五。",
    "T51n2095_003:1041c29_12": "時稱晉有四聖。",
    "T51n2095_003:1041c29_13": "生肇融叡其一也。",
    "T51n2095_003:1042a02_0": "釋曇順法師",
    "T51n2095_003:1042a03_0": "曇順黃龍人也。",
    "T51n2095_003:1042a03_1": "幼而出家。",
    "T51n2095_003:1042a03_2": "親承羅什之訓。",
    "T51n2095_003:1042a03_3": "舊疑宿滯多所通達。",
    "T51n2095_003:1042a04_4": "議論精博。",
    "T51n2095_003:1042a04_5": "講釋群經。",
    "T51n2095_003:1042a04_6": "演贊大乘。",
    "T51n2095_003:1042a05_7": "了悟玄微。",
    "T51n2095_003:1042a05_8": "色空無著。",
    "T51n2095_003:1042a05_9": "什公甞嘆曰。",
    "T51n2095_003:1042a05_10": "曇順實奇器矣。",
    "T51n2095_003:1042a06_11": "入廬山。",
    "T51n2095_003:1042a06_12": "從遠師同修西方淨社。",
    "T51n2095_003:1042a06_13": "志道不群。",
    "T51n2095_003:1042a07_14": "利濟為本。",
    "T51n2095_003:1042a07_15": "寧蠻校尉劉遵考。",
    "T51n2095_003:1042a07_16": "於江林立寺。",
    "T51n2095_003:1042a08_17": "請師經始。",
    "T51n2095_003:1042a08_18": "遠師遣從之。",
    "T51n2095_003:1042a08_19": "元嘉二年己丑歲終。",
    "T51n2095_003:1042a09_20": "春秋七十九。",
    "T51n2095_003:1042a10_0": "釋曇恒法師",
    "T51n2095_003:1042a11_0": "曇恒河東人。",
    "T51n2095_003:1042a11_1": "童孺出家。",
    "T51n2095_003:1042a11_2": "年十三講大乘經論。",
    "T51n2095_003:1042a12_0": "深明至理。",
    "T51n2095_003:1042a12_1": "及具戒。",
    "T51n2095_003:1042a12_2": "內外典籍皆悉備通。",
    "T51n2095_003:1042a12_3": "德行孤清。",
    "T51n2095_003:1042a13_4": "歲寒無改。",
    "T51n2095_003:1042a13_5": "棲神幽境。",
    "T51n2095_003:1042a13_6": "群鹿馴擾。",
    "T51n2095_003:1042a13_7": "誠無我心。",
    "T51n2095_003:1042a14_8": "物情自伏。",
    "T51n2095_003:1042a14_9": "願修西方。",
    "T51n2095_003:1042a14_10": "同歸淨社。",
    "T51n2095_003:1042a14_11": "晉義熙十四年戊午歲終。",
    "T51n2095_003:1042a15_12": "春秋七十一。",
    "T51n2095_003:1042a16_0": "釋道昺法師",
    "T51n2095_003:1042a17_0": "道昺姓陳。",
    "T51n2095_003:1042a17_1": "潁川人。",
    "T51n2095_003:1042a17_2": "幼出家。",
    "T51n2095_003:1042a17_3": "為遠公弟子。",
    "T51n2095_003:1042a17_4": "深達經律。",
    "T51n2095_003:1042a18_5": "涉獵外書。",
    "T51n2095_003:1042a18_6": "特深莊老。",
    "T51n2095_003:1042a18_7": "德行孤峻。",
    "T51n2095_003:1042a18_8": "慧悟夙深。",
    "T51n2095_003:1042a19_9": "所披文不復再覽。",
    "T51n2095_003:1042a19_10": "講述經典。",
    "T51n2095_003:1042a19_11": "其理直明。",
    "T51n2095_003:1042a20_12": "晉義熙十四年戊子。",
    "T51n2095_003:1042a20_13": "豫章太守王虞入山拜謁。",
    "T51n2095_003:1042a21_14": "嘉其風度。",
    "T51n2095_003:1042a21_15": "請為山主。",
    "T51n2095_003:1042a21_16": "紹大師之躅。",
    "T51n2095_003:1042a21_17": "眾以道源法嗣皆宗仰而羽翼焉。",
    "T51n2095_003:1042a22_18": "元嘉十二年乙亥終。",
    "T51n2095_003:1042a23_19": "春秋七十一。",
    "T51n2095_003:1042a24_0": "釋道敬法師",
    "T51n2095_003:1042a25_0": "道敬瑯琊王氏。",
    "T51n2095_003:1042a25_1": "從祖凝之剌江州。",
    "T51n2095_003:1042a25_2": "太元十六年。",
    "T51n2095_003:1042a26_3": "入山出家。",
    "T51n2095_003:1042a26_4": "為遠公弟子。",
    "T51n2095_003:1042a26_5": "博覽儒書。",
    "T51n2095_003:1042a26_6": "兼明至典。",
    "T51n2095_003:1042a27_7": "年十七。",
    "T51n2095_003:1042a27_8": "通大乘經論。",
    "T51n2095_003:1042a27_9": "所誦日過萬言。",
    "T51n2095_003:1042a27_10": "才學幽深。",
    "T51n2095_003:1042a28_11": "時賢敬伏。",
    "T51n2095_003:1042a28_12": "每嘆戒律終身難全。",
    "T51n2095_003:1042a28_13": "願淨六根。",
    "T51n2095_003:1042a29_14": "但稟一戒。",
    "T51n2095_003:1042a29_15": "師亦聽之。",
    "T51n2095_003:1042a29_16": "氷霜瑩然。",
    "T51n2095_003:1042a29_17": "德望尤著。",
    "T51n2095_003:1042b01_18": "遠公歸寂入若耶山。",
    "T51n2095_003:1042b01_19": "永初元年庚申終。",
    "T51n2095_003:1042b01_20": "春秋五十一。",
    "T51n2095_003:1042b03_0": "釋曇詵法師",
    "T51n2095_003:1042b04_0": "曇詵廣陵人。",
    "T51n2095_003:1042b04_1": "幼而出家。",
    "T51n2095_003:1042b04_2": "為遠公弟子。",
    "T51n2095_003:1042b04_3": "頗通外學。",
    "T51n2095_003:1042b05_4": "別識山中鳥獸毛色俊鈍之性。",
    "T51n2095_003:1042b05_5": "洞曉草木枝幹善惡甘苦之味。",
    "T51n2095_003:1042b06_6": "尤能講說。",
    "T51n2095_003:1042b06_7": "風神超朗。",
    "T51n2095_003:1042b06_8": "氣岸凝遠。",
    "T51n2095_003:1042b07_9": "審於傳寫。",
    "T51n2095_003:1042b07_10": "持本不移。",
    "T51n2095_003:1042b07_11": "注維摩經。",
    "T51n2095_003:1042b07_12": "著窮通論蓮社錄。",
    "T51n2095_003:1042b08_13": "建寺後五十五年。",
    "T51n2095_003:1042b08_14": "以元嘉十七年庚辰最後終。",
    "T51n2095_003:1042b09_15": "春秋七十九。",
    "T51n2095_003:1042b10_0": "廬山記卷第三"
}