[
    {
        "source_sentence": "佛祖統紀卷第二十三",
        "from": "T49n2035_023:0247a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋景定四明東湖沙門志盤撰",
        "from": "T49n2035_023:0247a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "9 歷代傳教表歷代傳教表第九",
        "from": "T49n2035_023:0247a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北齊悟一心三智之旨。",
        "from": "T49n2035_023:0247a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以授南岳。",
        "from": "T49n2035_023:0247a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳修之以授智者。",
        "from": "T49n2035_023:0247a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者始以五時八教開張一化。",
        "from": "T49n2035_023:0247b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而歸宗於法華本迹之妙。",
        "from": "T49n2035_023:0247b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既發其解必立之行。",
        "from": "T49n2035_023:0247b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是說己心中所行。",
        "from": "T49n2035_023:0247b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示一心三智之證。",
        "from": "T49n2035_023:0247b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載之文字。",
        "from": "T49n2035_023:0247b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用以印心。",
        "from": "T49n2035_023:0247b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以教後世。",
        "from": "T49n2035_023:0247b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自北齊上法龍猛。",
        "from": "T49n2035_023:0247b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下逮法智。",
        "from": "T49n2035_023:0247b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為十七世。",
        "from": "T49n2035_023:0247b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作歷代傳教表。",
        "from": "T49n2035_023:0247b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梁武帝蕭衍受齊禪都建康稱南朝天監元年壬辰盡十八年普通元年庚子盡七年大通元年丁未盡八年大同元年丁卯盡十二年大同中。",
        "from": "T49n2035_023:0247b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二祖文禪師。",
        "from": "T49n2035_023:0247b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於北朝河南。",
        "from": "T49n2035_023:0247b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為思禪師說三觀。",
        "from": "T49n2035_023:0247b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當東魏孝靜帝天平間。",
        "from": "T49n2035_023:0247b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "太清元年丁卯盡三年簡文帝綱武帝第三子天寶元年庚午盡二年元帝繹武帝第七子承聖元年壬申盡三年敬帝方智元帝第九子紹泰元年乙亥太平元年丙子陳武帝陳󰊉先受梁禪都建康永定元年丁丑盡三年文帝蒨武帝兄始興王子天嘉元年庚辰盡六年三祖思禪師於北朝光州大蘇山。",
        "from": "T49n2035_023:0247b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為顗禪師。",
        "from": "T49n2035_023:0247b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說四安樂行。",
        "from": "T49n2035_023:0247b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示普賢道場。",
        "from": "T49n2035_023:0247b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當北齊廢帝乾明元年。",
        "from": "T49n2035_023:0247b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天康元年丙戌廢帝伯宗文帝二子光大元年丁亥盡二年二年。",
        "from": "T49n2035_023:0247b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思禪師。",
        "from": "T49n2035_023:0247b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為南岳帝君授戒法。",
        "from": "T49n2035_023:0247b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣帝頊始興王第二子大建元年己丑盡十四年四祖顗禪師。",
        "from": "T49n2035_023:0247b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於金陵瓦官寺為儀同沈君理僕射徐陵等開法華經題。",
        "from": "T49n2035_023:0247c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夏開釋大義。",
        "from": "T49n2035_023:0247c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白馬敬韶等咸北面受業。",
        "from": "T49n2035_023:0247c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自此後常講大智度論。",
        "from": "T49n2035_023:0247c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說次第禪門。",
        "from": "T49n2035_023:0247c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及為尚書毛喜說六妙門。",
        "from": "T49n2035_023:0247c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大建中南岳思禪師。",
        "from": "T49n2035_023:0247c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為海東玄光法師說法華安樂行。",
        "from": "T49n2035_023:0247c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸國演教。",
        "from": "T49n2035_023:0247c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為高麗東國傳教之始。",
        "from": "T49n2035_023:0247c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大建九年六月二十二日。",
        "from": "T49n2035_023:0247c08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南岳禪師示寂。",
        "from": "T49n2035_023:0247c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少帝叔寶宣帝長子至德元年癸卯盡四年至德三年。",
        "from": "T49n2035_023:0247c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔瓦官顗禪師。",
        "from": "T49n2035_023:0247c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赴太極殿開大智度論題。",
        "from": "T49n2035_023:0247c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王般若經題。",
        "from": "T49n2035_023:0247c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還靈曜寺就講。",
        "from": "T49n2035_023:0247c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時百座居左。",
        "from": "T49n2035_023:0247c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五等居右。",
        "from": "T49n2035_023:0247c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧曠慧辯。",
        "from": "T49n2035_023:0247c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆奉勅難問。",
        "from": "T49n2035_023:0247c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天子臨筵聽法。",
        "from": "T49n2035_023:0247c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百僚盡敬。",
        "from": "T49n2035_023:0247c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至德四年。",
        "from": "T49n2035_023:0247c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔迎顗禪師。",
        "from": "T49n2035_023:0247c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居光宅寺。",
        "from": "T49n2035_023:0247c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝幸寺聽講仁王。",
        "from": "T49n2035_023:0247c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "躬禮三拜。",
        "from": "T49n2035_023:0247c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禎明元年丁未盡三年顗禪師。",
        "from": "T49n2035_023:0247c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於光宅講法華經。",
        "from": "T49n2035_023:0247c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安預聽。",
        "from": "T49n2035_023:0247c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隋文帝楊堅相周靜帝受禪都長安開皇十年庚戌是年陳亡始稱正統盡二十一年開皇十一年。",
        "from": "T49n2035_023:0247c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉王總管揚州。",
        "from": "T49n2035_023:0247c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎顗禪師於大聽事。",
        "from": "T49n2035_023:0247c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設千僧齋授菩薩戒。",
        "from": "T49n2035_023:0247c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師名晉王為總持王。",
        "from": "T49n2035_023:0247c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上師號稱智者。",
        "from": "T49n2035_023:0247c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十二年。",
        "from": "T49n2035_023:0247c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師於荊州當陽玉泉山為關王父子授戒。",
        "from": "T49n2035_023:0247c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十三年。",
        "from": "T49n2035_023:0247c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0247c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於玉泉說法華玄義。",
        "from": "T49n2035_023:0247c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安預聽。",
        "from": "T49n2035_023:0247c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十四年。",
        "from": "T49n2035_023:0247c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0247c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於玉泉說摩訶止觀。",
        "from": "T49n2035_023:0247c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章安預聽。",
        "from": "T49n2035_023:0247c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是年過岳陽為刺史王宣武授大乘戒法。",
        "from": "T49n2035_023:0248a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為學士曇捷等講金光明經。",
        "from": "T49n2035_023:0248a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十五年七月。",
        "from": "T49n2035_023:0248a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0248a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至揚州禪眾寺。",
        "from": "T49n2035_023:0248a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以所著淨名義疏。",
        "from": "T49n2035_023:0248a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉上晉王。",
        "from": "T49n2035_023:0248a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九月辭歸天台。",
        "from": "T49n2035_023:0248a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開皇十七年九月。",
        "from": "T49n2035_023:0248a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者禪師。",
        "from": "T49n2035_023:0248a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於天台佛隴為諸弟子口授觀心論。",
        "from": "T49n2035_023:0248a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一月。",
        "from": "T49n2035_023:0248a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於石城寺為弟子說十如。",
        "from": "T49n2035_023:0248a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四不生。",
        "from": "T49n2035_023:0248a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十法界。",
        "from": "T49n2035_023:0248a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三觀。",
        "from": "T49n2035_023:0248a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四無量心。",
        "from": "T49n2035_023:0248a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四悉檀。",
        "from": "T49n2035_023:0248a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四諦。",
        "from": "T49n2035_023:0248a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二因緣。",
        "from": "T49n2035_023:0248a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六波羅密。",
        "from": "T49n2035_023:0248a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一法門。",
        "from": "T49n2035_023:0248a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是月二十四日。",
        "from": "T49n2035_023:0248a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂於石城彌勒石佛像前。",
        "from": "T49n2035_023:0248a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁壽元年辛酉盡四年煬帝廣文帝第二子大業元年乙丑盡十二年恭帝隋煬帝子義寧元年丁丑盡一年五祖章安禪師。",
        "from": "T49n2035_023:0248a15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於天台國清寺為法華威禪師。",
        "from": "T49n2035_023:0248a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說止觀心要。",
        "from": "T49n2035_023:0248a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐高祖李淵受隋禪都長安武德元年戊寅盡九年太宗世民高祖次子貞觀元年丁亥盡二十三年貞觀六年八月七日章安禪師。",
        "from": "T49n2035_023:0248a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於國清寺。",
        "from": "T49n2035_023:0248a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂貞觀二十年。",
        "from": "T49n2035_023:0248a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召法華威禪師。",
        "from": "T49n2035_023:0248a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授朝散大夫引駕四大師。",
        "from": "T49n2035_023:0248a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高宗治太宗第九子永徽元年庚戌盡六年永徽六年。",
        "from": "T49n2035_023:0248a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召天宮威禪師。",
        "from": "T49n2035_023:0248a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "授朝散大夫引駕四大師。",
        "from": "T49n2035_023:0248a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與法華同職位。",
        "from": "T49n2035_023:0248a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯慶元年丙辰盡五年龍朔元年辛酉盡三年麟德元年甲子盡二年乾封元年丙寅盡二年總章元年戊辰盡二年咸亨元年庚午盡四年上元元年甲戌盡二年儀鳳元年丙子盡三年調露元年己卯永隆元年庚辰十一月二十八日。",
        "from": "T49n2035_023:0248b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華禪師。",
        "from": "T49n2035_023:0248b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示寂。",
        "from": "T49n2035_023:0248b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開耀元年辛巳永淳元年壬午弘道元年癸未則天高后武氏高宗之后廢太子為廬陵王臨朝稱制光宅元年甲申垂拱元年乙酉盡四年永昌元年己丑載初元年庚寅二年如意元年壬辰盡二年如意二年。",
        "from": "T49n2035_023:0248b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七祖天宮禪師。",
        "from": "T49n2035_023:0248b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於東陽天宮為左溪朗禪師說止觀。",
        "from": "T49n2035_023:0248b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延載元年甲午證聖元年乙未萬歲通天元年丙申神功元年丁酉聖歷元年戊戌盡二年久視元年庚子長安元年辛丑盡四年中宗顯高宗第七子母武后嘗廢為廬陵王神龍元年乙巳盡二年景龍元年丁未盡三年睿宗旦高宗第八子景雲元年庚戌盡二年先天元年壬子玄宗隆基睿宗第三子開元元年癸丑盡二十九年開元十八年。",
        "from": "T49n2035_023:0248b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八祖左溪禪師。",
        "from": "T49n2035_023:0248b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於東陽左溪為荊溪然禪師說止觀。",
        "from": "T49n2035_023:0248b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是年新羅法融等。",
        "from": "T49n2035_023:0248b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳教歸國。",
        "from": "T49n2035_023:0248b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天寶元年壬午盡十四年天寶十三年九月十九日。",
        "from": "T49n2035_023:0248b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左溪禪師示寂。",
        "from": "T49n2035_023:0248b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅宗亨玄宗第三子至德元年丙申盡二年乾元元年戊戌盡二年上元元年庚子盡二年寶應元年壬寅代宗豫肅宗長子廣德元年癸卯盡二年永泰元年乙巳大歷元年丙午盡十四年大歷中。",
        "from": "T49n2035_023:0248c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九祖荊溪禪師。",
        "from": "T49n2035_023:0248c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於天台佛隴為邃法師說止觀。",
        "from": "T49n2035_023:0248c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "德宗适代宗長子建中元年庚申盡四年建中三年二月五日。",
        "from": "T49n2035_023:0248c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荊溪禪師於佛隴示寂。",
        "from": "T49n2035_023:0248c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興元元年甲子貞元元年乙丑盡廿一年貞元中。",
        "from": "T49n2035_023:0248c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十祖邃法師。",
        "from": "T49n2035_023:0248c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於國清。",
        "from": "T49n2035_023:0248c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為修法師說止觀。",
        "from": "T49n2035_023:0248c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順宗誦德宗長子永貞元年邃法師於國清為日本最澄說止觀。",
        "from": "T49n2035_023:0248c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡寫一宗論疏以歸。",
        "from": "T49n2035_023:0248c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為日本傳教之始。",
        "from": "T49n2035_023:0248c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憲宗純順宗長子元和元年丙戌盡十五年穆宗恒憲宗第三子長慶元年辛丑盡四年敬宗湛穆宗長子寶歷元年乙巳盡二年文宗昂穆宗次子大和元年丁未盡九年大和中。",
        "from": "T49n2035_023:0248c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一祖修法師。",
        "from": "T49n2035_023:0248c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於禪林。",
        "from": "T49n2035_023:0248c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為外法師說止觀。",
        "from": "T49n2035_023:0248c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開成元年丙辰盡五年武宗炎穆宗第五子會昌元年辛酉盡六年會昌六年詔毀天下佛寺沙汰僧尼。",
        "from": "T49n2035_023:0248c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣宗忱憲宗十三子。",
        "from": "T49n2035_023:0248c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武宗欲加害。",
        "from": "T49n2035_023:0248c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂逃難為沙門依齊安師。",
        "from": "T49n2035_023:0248c22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "武宗崩群臣迎入京。",
        "from": "T49n2035_023:0248c22_34",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即帝位大中元年丁卯盡十三年詔復會昌所廢寺院。",
        "from": "T49n2035_023:0248c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懿宗催宣宗長子咸通元年庚辰盡十四年僖宗溪懿宗第五子乾符元年甲午盡六年乾符中十二祖外法師於國清為琇法師說止觀。",
        "from": "T49n2035_023:0248c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣明元年庚子中和元年辛丑盡四年光啟元年乙巳盡三年文德元年戊申昭宗曄懿宗第七子龍紀元年己酉十二祖琇法師於國清為竦法師說止觀法門。",
        "from": "T49n2035_023:0249a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大順元年庚戌盡二年景福元年壬子盡三年乾寧元年甲寅盡四年光化元年戊午盡三年天復元年辛酉盡四年景宗祝昭宗第九子天祐元年甲子盡三年梁五代太祖朱溫受唐禪都洛陽開平元年丁卯盡四年乾化元年辛未盡二年末帝瑱太祖第四子乾化三年癸酉盡二年貞明元年乙亥盡六年龍德元年辛巳盡二年唐莊宗李存勗破梁即位都洛陽同光元年癸未盡三年明宗亶本屈突部人賜姓李氏為莊宗昆弟天成元年丙戌盡四年長興元年庚寅盡四年末帝從珣本姓王明宗養子清泰元年甲午盡二年晉高祖石敬塘滅唐即位都汴天福元年丙申盡六年天福中十四祖竦法師於國清為寂法師說止觀。",
        "from": "T49n2035_023:0249a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少帝厘貴高祖從子天福七年壬寅盡二年開運元年甲辰盡三年漢高祖劉知遠。",
        "from": "T49n2035_023:0249a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晉少帝為契丹所虜。",
        "from": "T49n2035_023:0249a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中原無主遂即位於晉陽。",
        "from": "T49n2035_023:0249a27_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍用晉年號。",
        "from": "T49n2035_023:0249a27_31",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都汴天福十二年丁未隱帝承祐高祖猶子乾祐元年戊申盡三年周太祖郭令威受漢禪都汴廣順元年辛亥盡三年世宗榮太祖后柴氏之姪受遺制即帝位顯德元年甲寅盡五年恭帝崇訓世宗子顯德六年己未宋太祖受周禪都汴京建隆元年庚申盡三年吳越王錢俶。",
        "from": "T49n2035_023:0249b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣使往高麗日本。",
        "from": "T49n2035_023:0249b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求遺逸教乘論疏。",
        "from": "T49n2035_023:0249b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建隆二年。",
        "from": "T49n2035_023:0249b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高麗國。",
        "from": "T49n2035_023:0249b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣沙門諦觀。",
        "from": "T49n2035_023:0249b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持天台論疏至螺溪乾德元年癸亥盡五年。",
        "from": "T49n2035_023:0249b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五祖螺溪寂法師。",
        "from": "T49n2035_023:0249b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為通法師說止觀法門。",
        "from": "T49n2035_023:0249b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開寶元年戊辰盡八年太宗太平興國元年丙子盡八年太平興國四年。",
        "from": "T49n2035_023:0249b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六祖寶雲通法師。",
        "from": "T49n2035_023:0249b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為四明禮法師。",
        "from": "T49n2035_023:0249b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說止觀諸大乘法。",
        "from": "T49n2035_023:0249b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雍熙元年甲申盡四年雍熙四年十一月四日螺溪法師示寂。",
        "from": "T49n2035_023:0249b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端拱元年戊子盡二年十月二十一日寶雲法師示寂。",
        "from": "T49n2035_023:0249b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淳化元年庚寅盡五年至道元年乙未盡三年真宗咸平元年戊戌盡六年咸平六年。",
        "from": "T49n2035_023:0249b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七祖法智法師。",
        "from": "T49n2035_023:0249b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於南湖保恩答日本源信。",
        "from": "T49n2035_023:0249b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信問目二十七條。",
        "from": "T49n2035_023:0249b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景德元年甲辰盡四年撰指要鈔。",
        "from": "T49n2035_023:0249b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成出別理隨緣二十問。",
        "from": "T49n2035_023:0249b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以攻繼齊指濫之失。",
        "from": "T49n2035_023:0249b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "景德四年。",
        "from": "T49n2035_023:0249b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣本如持十義書二百問。",
        "from": "T49n2035_023:0249b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上錢唐昭師。",
        "from": "T49n2035_023:0249c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以救光明玄不立觀心之失。",
        "from": "T49n2035_023:0249c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中祥符元年戊申盡九年大中祥符三年。",
        "from": "T49n2035_023:0249c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賜保恩改額延慶。",
        "from": "T49n2035_023:0249c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同異聞師。",
        "from": "T49n2035_023:0249c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作誡誓辭二篇。",
        "from": "T49n2035_023:0249c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俾為長講天台宗教之所。",
        "from": "T49n2035_023:0249c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大中祥符七年。",
        "from": "T49n2035_023:0249c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰觀經融心解。",
        "from": "T49n2035_023:0249c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天禧元年丁巳盡五年與十僧。",
        "from": "T49n2035_023:0249c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修法華懺。",
        "from": "T49n2035_023:0249c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "期滿三年。",
        "from": "T49n2035_023:0249c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "焚身供法。",
        "from": "T49n2035_023:0249c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以公私勸止不獲如願。",
        "from": "T49n2035_023:0249c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "述消伏三用。",
        "from": "T49n2035_023:0249c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以破孤山闡義鈔之非。",
        "from": "T49n2035_023:0249c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天禧四年。",
        "from": "T49n2035_023:0249c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "駙馬李遵勗。",
        "from": "T49n2035_023:0249c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奏賜法智大師。",
        "from": "T49n2035_023:0249c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣旨令住世演教。",
        "from": "T49n2035_023:0249c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不許遺身。",
        "from": "T49n2035_023:0249c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天禧五年。",
        "from": "T49n2035_023:0249c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主上遣內侍俞源清。",
        "from": "T49n2035_023:0249c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣旨就寺。",
        "from": "T49n2035_023:0249c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修法華懺三日。",
        "from": "T49n2035_023:0249c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為述修懺要旨以答聖意。",
        "from": "T49n2035_023:0249c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是歲撰觀音別行玄記。",
        "from": "T49n2035_023:0249c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀經妙宗鈔皆成。",
        "from": "T49n2035_023:0249c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾興元年壬戌仁宗天聖元年癸亥盡九年撰光明續遺記成。",
        "from": "T49n2035_023:0249c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖三年。",
        "from": "T49n2035_023:0249c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先是天禧初。",
        "from": "T49n2035_023:0249c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詔天下立放生池。",
        "from": "T49n2035_023:0249c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師始於佛生日。",
        "from": "T49n2035_023:0249c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱魚鳥為放生事。",
        "from": "T49n2035_023:0249c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自述放生文。",
        "from": "T49n2035_023:0249c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是年郡守曾會。",
        "from": "T49n2035_023:0249c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以事聞。",
        "from": "T49n2035_023:0249c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勅樞密劉均。",
        "from": "T49n2035_023:0249c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰文刻石。",
        "from": "T49n2035_023:0249c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰宣聖化。",
        "from": "T49n2035_023:0249c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖五年。",
        "from": "T49n2035_023:0249c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撰光明文句記。",
        "from": "T49n2035_023:0249c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其後廣智續讚佛一品。",
        "from": "T49n2035_023:0249c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天聖六年正月元日。",
        "from": "T49n2035_023:0249c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建光明懺七日為順寂之期。",
        "from": "T49n2035_023:0249c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至五日趺坐說法唱佛而化。",
        "from": "T49n2035_023:0249c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闍維異香芬郁。",
        "from": "T49n2035_023:0249c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利無數。",
        "from": "T49n2035_023:0249c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌根不壞。",
        "from": "T49n2035_023:0249c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若紅蓮華。",
        "from": "T49n2035_023:0249c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明道元年壬申盡二年明道二年七月。",
        "from": "T49n2035_023:0250a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉靈骨起塔於南城崇法。",
        "from": "T49n2035_023:0250a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛祖統紀卷第二十三終",
        "from": "T49n2035_023:0250a03_100",
        "context_with_next_sentence": false
    }
]