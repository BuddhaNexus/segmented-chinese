[
    {
        "source_sentence": "仁王般若念誦法一卷",
        "from": "T19n0995_001:0520a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿",
        "from": "T19n0995_001:0520a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅國公食邑三千戶賜紫贈司",
        "from": "T19n0995_001:0520a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空謚大鑒正號大廣智大興善寺三藏沙門不空奉　詔譯爾時佛告波斯匿王。",
        "from": "T19n0995_001:0520a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為王說仁王護國般若波羅蜜多持明之法。",
        "from": "T19n0995_001:0520a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王當諦受一心善聽。",
        "from": "T19n0995_001:0520a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先明入道場儀軌。",
        "from": "T19n0995_001:0520a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸仁王為求息災。",
        "from": "T19n0995_001:0520a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須沐浴著新淨衣。",
        "from": "T19n0995_001:0520a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法行王者受近住戒。",
        "from": "T19n0995_001:0520a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應起殷重大乘之心。",
        "from": "T19n0995_001:0520a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求成就不惜身命。",
        "from": "T19n0995_001:0520a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無邊有情廣起悲願濟度之心能如是者速得成就。",
        "from": "T19n0995_001:0520a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道場已五體投地。",
        "from": "T19n0995_001:0520a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍禮法界一切三寶右膝著地懺悔三業一切罪障。",
        "from": "T19n0995_001:0520a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸十方佛轉正法輪。",
        "from": "T19n0995_001:0520a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請諸如來久住於世。",
        "from": "T19n0995_001:0520a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜三乘所修福智。",
        "from": "T19n0995_001:0520a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以我某甲所修功德。",
        "from": "T19n0995_001:0520a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆迴向無上菩提。",
        "from": "T19n0995_001:0520a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共法界一切有情。",
        "from": "T19n0995_001:0520a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求悉地速得滿足。",
        "from": "T19n0995_001:0520a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結跏趺坐。",
        "from": "T19n0995_001:0520a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如其闕緣不得澡浴。",
        "from": "T19n0995_001:0520a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手塗香發慇重心。",
        "from": "T19n0995_001:0520a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結清淨印。",
        "from": "T19n0995_001:0520a21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩手當心虛心合掌如未敷蓮華誦真言曰。",
        "from": "T19n0995_001:0520a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵娑嚩二合婆引嚩輸入鐸引薩嚩達磨引娑嚩二合婆嚩輸度撼誦此真言三遍。",
        "from": "T19n0995_001:0520a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正誦之時運心廣布。",
        "from": "T19n0995_001:0520a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法本來清淨。",
        "from": "T19n0995_001:0520a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我身亦悉清淨。",
        "from": "T19n0995_001:0520a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即閉目運想。",
        "from": "T19n0995_001:0520a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿虛空一切諸佛菩薩道場眾會。",
        "from": "T19n0995_001:0520a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執持種種上妙香花。",
        "from": "T19n0995_001:0520a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業至誠頭面禮敬。",
        "from": "T19n0995_001:0520a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "1 結佛部三昧耶印第一結佛部三昧耶印兩手當心。",
        "from": "T19n0995_001:0520b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內相叉作拳。",
        "from": "T19n0995_001:0520b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並竪二大拇指誦真言曰。",
        "from": "T19n0995_001:0520b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵爾那爾迦娑嚩二合引訶去引不出聲誦此真言三遍。",
        "from": "T19n0995_001:0520b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下皆准知。",
        "from": "T19n0995_001:0520b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散。",
        "from": "T19n0995_001:0520b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印契誦此佛部三昧耶真言故。",
        "from": "T19n0995_001:0520b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方法界一切諸佛。",
        "from": "T19n0995_001:0520b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆雲集遍滿虛空。",
        "from": "T19n0995_001:0520b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行者離諸障惱。",
        "from": "T19n0995_001:0520b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業清淨所修行願速得成就。",
        "from": "T19n0995_001:0520b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "2 結諸菩薩部三昧耶印第二結諸菩薩部三昧耶印兩手當心如前作拳。",
        "from": "T19n0995_001:0520b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左大拇指屈於掌中誦真言曰。",
        "from": "T19n0995_001:0520b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿引嚧引力迦娑嚩二合訶去準前誦三遍。",
        "from": "T19n0995_001:0520b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散。",
        "from": "T19n0995_001:0520b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印契誦此諸菩薩部三昧耶真言故。",
        "from": "T19n0995_001:0520b14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得觀自在菩薩等。",
        "from": "T19n0995_001:0520b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方法界一切菩薩。",
        "from": "T19n0995_001:0520b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆雲集遍滿虛空。",
        "from": "T19n0995_001:0520b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行法行者三業清淨無諸災難謂諸菩薩承本悲願。",
        "from": "T19n0995_001:0520b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令所求者皆悉滿足。",
        "from": "T19n0995_001:0520b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "3 結金剛部三昧耶印第三結金剛部三昧耶印右如前印舒左大拇指。",
        "from": "T19n0995_001:0520b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈右大拇指於掌中。",
        "from": "T19n0995_001:0520b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T19n0995_001:0520b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合地力迦娑嚩二合引訶准前誦三遍於頂上散。",
        "from": "T19n0995_001:0520b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印契誦金剛部三昧耶真言故。",
        "from": "T19n0995_001:0520b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得十方法界一切金剛現威怒身。",
        "from": "T19n0995_001:0520b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如雲而集滿虛空界。",
        "from": "T19n0995_001:0520b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持行法行者。",
        "from": "T19n0995_001:0520b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業堅固猶如金剛。",
        "from": "T19n0995_001:0520b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂彼聖者承佛威神以自願力。",
        "from": "T19n0995_001:0520b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大則護持國界令無災難。",
        "from": "T19n0995_001:0520b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小則乃至一身令無諸厄。",
        "from": "T19n0995_001:0520b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "4 結護身印第四結護身印又用三部所結印契。",
        "from": "T19n0995_001:0520b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及誦真言五處加持。",
        "from": "T19n0995_001:0520b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂額左肩右肩心喉五處。",
        "from": "T19n0995_001:0520c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散。",
        "from": "T19n0995_001:0520c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成被金剛堅固甲冑。",
        "from": "T19n0995_001:0520c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此加持遍行者身。",
        "from": "T19n0995_001:0520c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威光赫𭴢一切諸魔作障惱者。",
        "from": "T19n0995_001:0520c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼不敢覩疾走而去。",
        "from": "T19n0995_001:0520c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "5 結辟除印及金剛方隅寶界印第五結辟除印及金剛方隅寶界印右以前金剛部印契。",
        "from": "T19n0995_001:0520c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦彼真言繞壇左轉三匝。",
        "from": "T19n0995_001:0520c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能辟除大力諸魔隨佛菩薩。",
        "from": "T19n0995_001:0520c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有隱者遠去他界。",
        "from": "T19n0995_001:0520c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心大小右轉三匝。",
        "from": "T19n0995_001:0520c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成金剛方隅寶界。",
        "from": "T19n0995_001:0520c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩尚不違越。",
        "from": "T19n0995_001:0520c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況障惱者能得其便。",
        "from": "T19n0995_001:0520c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散。",
        "from": "T19n0995_001:0520c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "6 結請聖眾降壇印第六結請聖眾降壇印右用前三部印契及誦真言。",
        "from": "T19n0995_001:0520c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大拇指向身招請。",
        "from": "T19n0995_001:0520c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三遍三招。",
        "from": "T19n0995_001:0520c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前滿空三部聖眾。",
        "from": "T19n0995_001:0520c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各依本位不相障礙。",
        "from": "T19n0995_001:0520c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂然而住頂上散。",
        "from": "T19n0995_001:0520c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "7 獻閼伽香水印第七獻閼伽香水印右以兩手持捧摩尼寶器盛香水。",
        "from": "T19n0995_001:0520c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於眉間誦真言曰。",
        "from": "T19n0995_001:0520c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合引娜迦吽引準上誦三遍。",
        "from": "T19n0995_001:0520c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心廣布。",
        "from": "T19n0995_001:0520c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第普浴一切聖眾。",
        "from": "T19n0995_001:0520c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散。",
        "from": "T19n0995_001:0520c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由獻閼伽故。",
        "from": "T19n0995_001:0520c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從勝解行地乃至法雲地。",
        "from": "T19n0995_001:0520c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於地地中十方法界諸佛菩薩。",
        "from": "T19n0995_001:0520c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉加護諸佛灌頂。",
        "from": "T19n0995_001:0520c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "8 獻寶座印第八獻寶座印右以兩手當心虛心合掌。",
        "from": "T19n0995_001:0520c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大拇指及二小指。",
        "from": "T19n0995_001:0520c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相附少屈。",
        "from": "T19n0995_001:0520c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘之六指各散。",
        "from": "T19n0995_001:0520c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微屈如開敷蓮華。",
        "from": "T19n0995_001:0520c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T19n0995_001:0520c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵迦磨攞娑嚩二合引訶由結印契及誦真言。",
        "from": "T19n0995_001:0520c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獻寶座令諸聖眾皆如實受用。",
        "from": "T19n0995_001:0520c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則令行法行者至果位中。",
        "from": "T19n0995_001:0520c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得金剛堅固寶座。",
        "from": "T19n0995_001:0520c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "9 結普供養印第九結普供養印右以兩手合掌。",
        "from": "T19n0995_001:0521a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五指互交以右押左。",
        "from": "T19n0995_001:0521a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於心上誦真言曰。",
        "from": "T19n0995_001:0521a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三曼多沒馱引南引薩嚩他欠平烏娜誐二合諦薩頗二合囉呬引𤚥誐誐曩上劍娑嚩二合引訶由結此印誦真言故蓮心廣布。",
        "from": "T19n0995_001:0521a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍法界諸佛菩薩道場海會。",
        "from": "T19n0995_001:0521a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普雨一切諸供養具。",
        "from": "T19n0995_001:0521a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初誦一遍。",
        "from": "T19n0995_001:0521a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵沙寶器滿盛塗香普塗聖眾。",
        "from": "T19n0995_001:0521a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦第二遍。",
        "from": "T19n0995_001:0521a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種花鬘普遍莊嚴。",
        "from": "T19n0995_001:0521a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦第三遍。",
        "from": "T19n0995_001:0521a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒種種香普遍供養。",
        "from": "T19n0995_001:0521a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦第四遍。",
        "from": "T19n0995_001:0521a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨諸天中上妙飲食。",
        "from": "T19n0995_001:0521a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於寶器普遍供養。",
        "from": "T19n0995_001:0521a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦第五遍。",
        "from": "T19n0995_001:0521a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨諸摩尼以為燈明普遍供養。",
        "from": "T19n0995_001:0521a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩由誦真言加持力故。",
        "from": "T19n0995_001:0521a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獻香等於諸海會悉皆真實聖眾受用。",
        "from": "T19n0995_001:0521a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行法行者於當來世常獲是報。",
        "from": "T19n0995_001:0521a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "10 結般若波羅蜜多根本印第十結般若波羅蜜多根本印又以兩手背相附。",
        "from": "T19n0995_001:0521a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收二頭指。",
        "from": "T19n0995_001:0521a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二小指屈於掌中。",
        "from": "T19n0995_001:0521a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大拇指各押二指頭。",
        "from": "T19n0995_001:0521a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於心上。",
        "from": "T19n0995_001:0521a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦經中陀羅尼七遍。",
        "from": "T19n0995_001:0521a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印誦陀羅尼故。",
        "from": "T19n0995_001:0521a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行法行者自身即便變成般若波羅蜜多菩薩。",
        "from": "T19n0995_001:0521a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為一切諸佛之母。",
        "from": "T19n0995_001:0521a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其菩薩像結跏趺坐白蓮華上。",
        "from": "T19n0995_001:0521a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身黃金色。",
        "from": "T19n0995_001:0521a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾寶瓔珞遍身莊嚴。",
        "from": "T19n0995_001:0521a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首戴寶冠繫冠白繒。",
        "from": "T19n0995_001:0521a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩邊垂下。",
        "from": "T19n0995_001:0521a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手當心持般若梵夾。",
        "from": "T19n0995_001:0521a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手當乳作說法印。",
        "from": "T19n0995_001:0521a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大拇指押無名指頭。",
        "from": "T19n0995_001:0521a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想菩薩從頂至足身諸毛孔。",
        "from": "T19n0995_001:0521a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出光明作種種色。",
        "from": "T19n0995_001:0521a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿法界。",
        "from": "T19n0995_001:0521a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一光中化無量佛。",
        "from": "T19n0995_001:0521a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍虛空界諸世界中。",
        "from": "T19n0995_001:0521a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為眾生當根宣說般若波羅蜜多甚深之法。",
        "from": "T19n0995_001:0521a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆令悟解。",
        "from": "T19n0995_001:0521a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住三摩地行法行王作此觀已。",
        "from": "T19n0995_001:0521a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂上散印。",
        "from": "T19n0995_001:0521a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手持數珠置於掌中。",
        "from": "T19n0995_001:0521b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌當心。",
        "from": "T19n0995_001:0521b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T19n0995_001:0521b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵尾嚧者那引麼攞娑嚩二合引訶引誦此三遍加持數珠頂上戴已。",
        "from": "T19n0995_001:0521b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後當心。",
        "from": "T19n0995_001:0521b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手承珠右手移珠。",
        "from": "T19n0995_001:0521b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念相應住佛母三昧。",
        "from": "T19n0995_001:0521b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀心莫間斷。",
        "from": "T19n0995_001:0521b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一百八遍或二十一遍。",
        "from": "T19n0995_001:0521b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T19n0995_001:0521b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜謨囉怛娜二合怛囉二合夜野一娜莫引阿哩夜二合吠無蓋反𡀔者娜野二怛他引󰋲多引夜囉訶二合諦三三貌三沒馱引野四娜莫阿引哩野二合五三滿多跋捺囉二合引野六󰂛地薩怛嚩二合引野七摩賀薩怛嚩二合引野八摩賀迦引嚕抳迦引野九怛儞野二合他十引枳穰二合娜鉢囉二合儞引閉十一惡乞叉二合野句勢十二鉢囉二合底婆引娜嚩底十三薩嚩沒馱引嚩路枳諦十四喻誐跛哩儞澁跛二合寧十五儼避引囉努囉嚩誐引係十六底哩野三合特嚩二合十七跛哩儞澁跛二合寧十八󰂛地質多散惹娜儞十九薩嚩引毘曬迦引毘色訖諦二合二十達磨娑引誐囉三步諦二十一阿慕伽室囉二合嚩儜二十二摩賀三滿多跋捺囉二合步彌二十三涅奴逸反哩野二合諦二十四尾野二合羯囉拏二十五跛哩鉢囉二合跛儞二十六薩嚩悉馱二十七娜麼塞訖哩二合諦二十八薩嚩冒地薩怛嚩二合二十九散惹娜儞三十婆誐嚩底丁以反引三十一沒馱引麼諦三十二阿囉嬭迦囉嬭三十三阿囉拏迦囉嬭三十四摩賀鉢囉二合枳穰二合三十五播囉弭諦娑嚩二合引賀三十六如是依前至心誦念。",
        "from": "T19n0995_001:0521b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍數足已。",
        "from": "T19n0995_001:0521b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即頂戴數珠置於本處。",
        "from": "T19n0995_001:0521c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結三摩地印橫舒兩手以右押左。",
        "from": "T19n0995_001:0521c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於臍下。",
        "from": "T19n0995_001:0521c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端身閉目頭少微屈專注心上。",
        "from": "T19n0995_001:0521c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀圓明鏡智上縱廣一肘。",
        "from": "T19n0995_001:0521c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸遍法界。",
        "from": "T19n0995_001:0521c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布字行列右旋次第觀。",
        "from": "T19n0995_001:0521c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一字光明徹照。",
        "from": "T19n0995_001:0521c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從外向內至於地字。",
        "from": "T19n0995_001:0521c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從內向外漸觀諸字。",
        "from": "T19n0995_001:0521c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周而復始。",
        "from": "T19n0995_001:0521c05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至第三遍心善寂定。",
        "from": "T19n0995_001:0521c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了分明觀所詮義。",
        "from": "T19n0995_001:0521c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不生不滅一一平等。",
        "from": "T19n0995_001:0521c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆遍法界非動非靜。",
        "from": "T19n0995_001:0521c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧雙運永離諸相。",
        "from": "T19n0995_001:0521c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是般若波羅蜜多三摩地觀。",
        "from": "T19n0995_001:0521c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此却結般若波羅蜜多印。",
        "from": "T19n0995_001:0521c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦陀羅尼七遍。",
        "from": "T19n0995_001:0521c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散。",
        "from": "T19n0995_001:0521c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結普供養印。",
        "from": "T19n0995_001:0521c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前運心次第供養。",
        "from": "T19n0995_001:0521c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對聖眾前。",
        "from": "T19n0995_001:0521c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以向所修所生功德。",
        "from": "T19n0995_001:0521c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡將資益所求諸願。",
        "from": "T19n0995_001:0521c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為國為家利他滿足。",
        "from": "T19n0995_001:0521c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後迴施眾生。",
        "from": "T19n0995_001:0521c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴嚴淨土迴向實際。",
        "from": "T19n0995_001:0521c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴求無上菩提。",
        "from": "T19n0995_001:0521c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願共有情速至彼岸。",
        "from": "T19n0995_001:0521c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結前結界印。",
        "from": "T19n0995_001:0521c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前真言三遍左轉即成解界。",
        "from": "T19n0995_001:0521c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結前三部印。",
        "from": "T19n0995_001:0521c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前真言三遍。",
        "from": "T19n0995_001:0521c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆以大拇指向外撥之。",
        "from": "T19n0995_001:0521c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成發遣聖眾各歸本土。",
        "from": "T19n0995_001:0521c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者作禮而去。",
        "from": "T19n0995_001:0521c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如常經行。",
        "from": "T19n0995_001:0521c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦大乘勿散動也。",
        "from": "T19n0995_001:0521c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是五更至於晨朝以為初時。",
        "from": "T19n0995_001:0521c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從日午後至於未時為第二時。",
        "from": "T19n0995_001:0521c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從黃昏後至於中夜為第三時。",
        "from": "T19n0995_001:0521c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從中夜後至於五更為第四時。",
        "from": "T19n0995_001:0521c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是時中各依本數。",
        "from": "T19n0995_001:0521c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精勤不怠一切他敵自然降伏。",
        "from": "T19n0995_001:0521c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災難永不復生。",
        "from": "T19n0995_001:0521c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時波斯匿王聞佛說已。",
        "from": "T19n0995_001:0521c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從坐起作禮圍繞。",
        "from": "T19n0995_001:0521c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踊躍信受奉行。",
        "from": "T19n0995_001:0521c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁王般若念誦法一卷",
        "from": "T19n0995_001:0522a01_100",
        "context_with_next_sentence": false
    }
]