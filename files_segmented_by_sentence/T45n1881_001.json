[
    {
        "source_sentence": "大方廣佛華嚴經金師子章",
        "from": "T45n1881_001:0668a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五臺山真容院沙門承遷註",
        "from": "T45n1881_001:0668a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金師子章　金師子者。能喻法也。究其本",
        "from": "T45n1881_001:0668a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元即有。",
        "from": "T45n1881_001:0668a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐賢首法師對則天聖帝。",
        "from": "T45n1881_001:0668a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示大經厥旨。",
        "from": "T45n1881_001:0668a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂華嚴理深事廣文博義玄。",
        "from": "T45n1881_001:0668a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非入理聖人無以達其奧。",
        "from": "T45n1881_001:0668a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以立見邊之喻。",
        "from": "T45n1881_001:0668a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曉無涯之法。",
        "from": "T45n1881_001:0668a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金況法界體也。",
        "from": "T45n1881_001:0668a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子喻法界用也。",
        "from": "T45n1881_001:0668a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今則從法就喻。",
        "from": "T45n1881_001:0668a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略啟十門分別故。",
        "from": "T45n1881_001:0668a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得理事鎔融一多無礙矣。",
        "from": "T45n1881_001:0668a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐崇福寺賢首法師法藏述初明緣起　萬像本空。",
        "from": "T45n1881_001:0668a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假緣方有。",
        "from": "T45n1881_001:0668a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二辨色空　幻法紛然。",
        "from": "T45n1881_001:0668a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真空不動。",
        "from": "T45n1881_001:0668a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三約三性　迷之名相。",
        "from": "T45n1881_001:0668a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟之即真。",
        "from": "T45n1881_001:0668a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四顯無相　相即無相。",
        "from": "T45n1881_001:0668a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非相即相。",
        "from": "T45n1881_001:0668a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五說無生　無生之生。",
        "from": "T45n1881_001:0668a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生即無生。",
        "from": "T45n1881_001:0668a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六論五教　根器不同。",
        "from": "T45n1881_001:0668a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設教有異。",
        "from": "T45n1881_001:0668a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七勒十玄　緣起交映。",
        "from": "T45n1881_001:0668a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法法重重。",
        "from": "T45n1881_001:0668a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八括六相　法無定相。",
        "from": "T45n1881_001:0668a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉一即多。",
        "from": "T45n1881_001:0668a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九成菩提　萬行既圓。",
        "from": "T45n1881_001:0668a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本覺露現。",
        "from": "T45n1881_001:0668a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十入涅槃　智體即如。",
        "from": "T45n1881_001:0668a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名大涅槃。",
        "from": "T45n1881_001:0668a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一明緣起者　謂萬法無體。",
        "from": "T45n1881_001:0668a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假緣成立。",
        "from": "T45n1881_001:0668a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無因緣。",
        "from": "T45n1881_001:0668a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法即不生。",
        "from": "T45n1881_001:0668a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "T45n1881_001:0668a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法從緣起。",
        "from": "T45n1881_001:0668a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣即不起。",
        "from": "T45n1881_001:0668a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂以金無自性　喻真理不變也。",
        "from": "T45n1881_001:0668b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨巧匠之緣遂有師子相起　喻真理隨緣成諸事法也。",
        "from": "T45n1881_001:0668b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起但是緣故名緣起　結真理不動動即事也。",
        "from": "T45n1881_001:0668b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金喻一真之性。",
        "from": "T45n1881_001:0668b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子喻緣起事法。",
        "from": "T45n1881_001:0668b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理本無生。",
        "from": "T45n1881_001:0668b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨諸緣法成差別相。",
        "from": "T45n1881_001:0668b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相起繁興理即無生。",
        "from": "T45n1881_001:0668b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故清涼云。",
        "from": "T45n1881_001:0668b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理隨事變。",
        "from": "T45n1881_001:0668b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則一多緣起之無邊。",
        "from": "T45n1881_001:0668b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二辨色空者　色者悲也。",
        "from": "T45n1881_001:0668b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空者智也。",
        "from": "T45n1881_001:0668b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀色即空成大智。",
        "from": "T45n1881_001:0668b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不住生死。",
        "from": "T45n1881_001:0668b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀空即色成大悲。",
        "from": "T45n1881_001:0668b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不滯涅槃。",
        "from": "T45n1881_001:0668b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能辯之智煥然明了。",
        "from": "T45n1881_001:0668b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂以師子相虛　喻色空也。",
        "from": "T45n1881_001:0668b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯是真金　喻性實也。",
        "from": "T45n1881_001:0668b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子不有　喻緣起幻色不是實有。",
        "from": "T45n1881_001:0668b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金體不無　喻真空常存。",
        "from": "T45n1881_001:0668b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云色空。",
        "from": "T45n1881_001:0668b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復空無自性。",
        "from": "T45n1881_001:0668b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約色以明不礙幻存故名色空　真空無形。",
        "from": "T45n1881_001:0668b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假色相以明。",
        "from": "T45n1881_001:0668b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法本亡言。",
        "from": "T45n1881_001:0668b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就言詮而顯道。",
        "from": "T45n1881_001:0668b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故清涼云。",
        "from": "T45n1881_001:0668b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖空空絕迹。",
        "from": "T45n1881_001:0668b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而義天星像璨然。",
        "from": "T45n1881_001:0668b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三約三性者　迷心所執計有相生以為實者。",
        "from": "T45n1881_001:0668b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂之偏計性也。",
        "from": "T45n1881_001:0668b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不了緣生依他性也。",
        "from": "T45n1881_001:0668b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依他無性即是圓成。",
        "from": "T45n1881_001:0668b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨舉一法三性具矣。",
        "from": "T45n1881_001:0668b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂以師子情有名為遍計　謂一切眾生無始已來煩惱業習癡迷不了。",
        "from": "T45n1881_001:0668b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周遍計度心外有法。",
        "from": "T45n1881_001:0668b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒取捨。",
        "from": "T45n1881_001:0668b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨情起惑。",
        "from": "T45n1881_001:0668b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自纏自縛。",
        "from": "T45n1881_001:0668b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枉受輪迴。",
        "from": "T45n1881_001:0668b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子似有名為依他　謂一切眾生依真起妄。",
        "from": "T45n1881_001:0668b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似有之法妄執依他內外不實。",
        "from": "T45n1881_001:0668b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故論云。",
        "from": "T45n1881_001:0668b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依他起自性分別緣所生。",
        "from": "T45n1881_001:0668b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金性不變故號圓成　圓而不減。",
        "from": "T45n1881_001:0668c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成而不增。",
        "from": "T45n1881_001:0668c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子雖則相殊。",
        "from": "T45n1881_001:0668c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金且不隨殊變。",
        "from": "T45n1881_001:0668c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋曰。",
        "from": "T45n1881_001:0668c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法與自心為緣。",
        "from": "T45n1881_001:0668c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心法方起。",
        "from": "T45n1881_001:0668c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今了緣無體。",
        "from": "T45n1881_001:0668c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依心方現。",
        "from": "T45n1881_001:0668c03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無自體性。",
        "from": "T45n1881_001:0668c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為依他無自生性。",
        "from": "T45n1881_001:0668c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由二義現前。",
        "from": "T45n1881_001:0668c05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃為圓成勝義性也。",
        "from": "T45n1881_001:0668c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T45n1881_001:0668c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從無住本立一切法。",
        "from": "T45n1881_001:0668c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四顯無相者　不了諸法而無相迷心為有者生死也。",
        "from": "T45n1881_001:0668c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察即虛相即無相出世法也。",
        "from": "T45n1881_001:0668c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂以金收師子盡　喻理奪事。",
        "from": "T45n1881_001:0668c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金外更無師子可得　喻緣起事法當體本虛。",
        "from": "T45n1881_001:0668c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名無相　釋曰。",
        "from": "T45n1881_001:0668c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離真理外無片事可得故。",
        "from": "T45n1881_001:0668c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如水奪波波無不盡故。",
        "from": "T45n1881_001:0668c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則水存以壞波令盡。",
        "from": "T45n1881_001:0668c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "T45n1881_001:0668c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所見不可見。",
        "from": "T45n1881_001:0668c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所聞不可聞。",
        "from": "T45n1881_001:0668c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知諸世間。",
        "from": "T45n1881_001:0668c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名為無相。",
        "from": "T45n1881_001:0668c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五說無生者　法本無生。",
        "from": "T45n1881_001:0668c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從緣有故。",
        "from": "T45n1881_001:0668c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既無自體。",
        "from": "T45n1881_001:0668c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生而無生。",
        "from": "T45n1881_001:0668c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂以正見師子生時但是金生　喻真理隨緣成諸事法。",
        "from": "T45n1881_001:0669a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金外更無一物　離真理之外無別事相。",
        "from": "T45n1881_001:0669a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染淨之法因緣有。",
        "from": "T45n1881_001:0669a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故體性本虛無生生也。",
        "from": "T45n1881_001:0669a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子雖有生滅金體本無增減　無生之理本無生滅。",
        "from": "T45n1881_001:0669a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣起集成生本無生。",
        "from": "T45n1881_001:0669a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故曰無生　釋曰。",
        "from": "T45n1881_001:0669a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今由緣生。",
        "from": "T45n1881_001:0669a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非生方得名生。",
        "from": "T45n1881_001:0669a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了生死性乃是無生。",
        "from": "T45n1881_001:0669a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論云。",
        "from": "T45n1881_001:0669a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因不自生。",
        "from": "T45n1881_001:0669a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣生故。",
        "from": "T45n1881_001:0669a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣不自生。",
        "from": "T45n1881_001:0669a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因生故。",
        "from": "T45n1881_001:0669a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然生與無生互成互奪。",
        "from": "T45n1881_001:0669a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奪則無生。",
        "from": "T45n1881_001:0669a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成乃緣生。",
        "from": "T45n1881_001:0669a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由即成即奪。",
        "from": "T45n1881_001:0669a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故生時無生。",
        "from": "T45n1881_001:0669a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是了者名達無生。",
        "from": "T45n1881_001:0669a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六論五教一聲聞教二大乘始教三大乘終教四大乘頓教五一乘圓教第一聲聞教謂此師子雖是緣生之法念念生滅　喻一切事法從緣有。",
        "from": "T45n1881_001:0669a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故各無自性。",
        "from": "T45n1881_001:0669a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有停息。",
        "from": "T45n1881_001:0669a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實無師子可得故名聲聞教　橫計一切境界實有自體。",
        "from": "T45n1881_001:0669a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但證人空不了法空。",
        "from": "T45n1881_001:0669a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二大乘始教者謂此師子緣生之法各無自性徹底唯空故名大乘始教　喻師子無體。",
        "from": "T45n1881_001:0669a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全假真金成工匠緣師子相顯。",
        "from": "T45n1881_001:0669a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三大乘終教者謂此師子雖然徹底唯空不礙幻法宛然　雖則真金純一。",
        "from": "T45n1881_001:0669a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不礙師子相存。",
        "from": "T45n1881_001:0669a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣生假有二相雙存　真俗二諦歷然可觀。",
        "from": "T45n1881_001:0669a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子與金兩法齊現。",
        "from": "T45n1881_001:0669a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名大乘終教。",
        "from": "T45n1881_001:0669a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四大乘頓教者謂即此二相互奪兩亡　以理奪事。",
        "from": "T45n1881_001:0669a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事隱理顯。",
        "from": "T45n1881_001:0669a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情偽不存俱無有力空有雙泯名言路絕棲心無寄　直辯真性本空。",
        "from": "T45n1881_001:0669a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一法可當情者。",
        "from": "T45n1881_001:0669a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻金與師子二相俱泯。",
        "from": "T45n1881_001:0669b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內外無寄。",
        "from": "T45n1881_001:0669b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名大乘頓教。",
        "from": "T45n1881_001:0669b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五一乘圓教者謂即此師子情盡體露之法渾成一塊　喻師子相盡真金現前。",
        "from": "T45n1881_001:0669b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繁興大用起必全真　喻師子功用事事皆金。",
        "from": "T45n1881_001:0669b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬像紛紜參而不雜　雖四像遷移。",
        "from": "T45n1881_001:0669b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各住自位。",
        "from": "T45n1881_001:0669b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切即一皆同無性　攝末歸本。",
        "from": "T45n1881_001:0669b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不礙末也。",
        "from": "T45n1881_001:0669b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一即一切因果歷然　依本起末。",
        "from": "T45n1881_001:0669b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不礙本也。",
        "from": "T45n1881_001:0669b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力用相收卷舒自在　力顯性起圓融法門無礙。",
        "from": "T45n1881_001:0669b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名一乘圓教。",
        "from": "T45n1881_001:0669b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七勒十玄門一同時具足相應門二一多相容不同門三祕密隱顯俱成門四因陀羅網境界門五諸藏純雜具德門六諸法相即自在門七微細相容安立門八十世隔法異成門九由心󱍧轉善成門十託事顯法生解門。",
        "from": "T45n1881_001:0669b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一同時具足門謂金與師子同時成立圓滿具足　喻依法界體起諸事法。",
        "from": "T45n1881_001:0669b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨舉一法具一切法。",
        "from": "T45n1881_001:0669b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別有差別。",
        "from": "T45n1881_001:0669b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非造玄也。",
        "from": "T45n1881_001:0669b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名同時具足相應門。",
        "from": "T45n1881_001:0669b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二一多相容不同門者謂金與師子相容成立一多無礙於中理事各各不同或多各住自位　如稱理之行一一各容一切諸法。",
        "from": "T45n1881_001:0669b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦一一各具一切諸行。",
        "from": "T45n1881_001:0669b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖相容本不動也。",
        "from": "T45n1881_001:0669b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名一多相容不同門。",
        "from": "T45n1881_001:0669b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三祕密隱顯俱成門者謂若看師子唯見師子無金則師子顯金隱　喻事能隱理。",
        "from": "T45n1881_001:0669c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若看金唯金無師子則金顯師子隱　喻理能隱事也。",
        "from": "T45n1881_001:0669c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若兩處看俱顯俱顯隱則祕密顯則顯著故名祕密隱顯俱成門。",
        "from": "T45n1881_001:0669c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四因陀羅網境界門者謂師子眼耳支節一一毛處各有金師子　小法中含大法。",
        "from": "T45n1881_001:0669c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一毛處師子同時頓入一莖毛中各各顯露皆有無邊師子　一事中含多事。",
        "from": "T45n1881_001:0669c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一多頓現。",
        "from": "T45n1881_001:0669c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一毛頭帶此無邊師子還入一莖毛中如是重重無盡　多入一無礙。",
        "from": "T45n1881_001:0669c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若帝網之天珠故名因陀羅網境界門。",
        "from": "T45n1881_001:0669c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五諸藏純雜具德門者謂若以眼收師子盡則一切純是眼　如以布施一行收盡一切行總名布施故。",
        "from": "T45n1881_001:0669c15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "號曰純也。",
        "from": "T45n1881_001:0669c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若耳收師子盡則一切純是耳若諸根同時相收悉皆具足一一皆純一一皆雜是圓滿藏　萬行同時。",
        "from": "T45n1881_001:0669c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更互莊嚴。",
        "from": "T45n1881_001:0669c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純雜無礙。",
        "from": "T45n1881_001:0669c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名諸藏純雜具德門。",
        "from": "T45n1881_001:0669c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六諸法相即自在門者謂即師子諸根一一毛頭皆各以金收師子盡　喻法界緣起一切諸法皆互相即相遍也。",
        "from": "T45n1881_001:0670a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一皆徹師子眼眼即耳耳即鼻無礙無障　喻布施即九度。",
        "from": "T45n1881_001:0670a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多行即一行也。",
        "from": "T45n1881_001:0670a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名諸法相即自在門。",
        "from": "T45n1881_001:0670a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七微細相容安立門者謂金與師子或隱或顯或一或多定散同時　經云。",
        "from": "T45n1881_001:0670a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝應觀我諸毛孔。",
        "from": "T45n1881_001:0670a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今示汝。",
        "from": "T45n1881_001:0670a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛境界俱時歷然。",
        "from": "T45n1881_001:0670a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此即彼有力無力主伴交輝理事齊現　所現萬法海印炳然。",
        "from": "T45n1881_001:0670a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆相容不礙安立微細成辦　以理成事。",
        "from": "T45n1881_001:0670a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事法不定互相容攝安立同時。",
        "from": "T45n1881_001:0670a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名微細相容安立門。",
        "from": "T45n1881_001:0670a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八十世隔法異成門者謂此師子是有為之法念念生滅　喻真理隨緣成諸事法各各不實也。",
        "from": "T45n1881_001:0670a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那之間分為三際謂有過去未來現在三際　總相之中分限不同。",
        "from": "T45n1881_001:0670a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總有三三之位以立九世　一即多多不壞則束為一段法門　一法門中無量門種種脩短各各不同。",
        "from": "T45n1881_001:0670a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖則九世有隔不同相由成立融通無礙同為一念　攝末歸本。",
        "from": "T45n1881_001:0670a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故號十世隔法異成門。",
        "from": "T45n1881_001:0670a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九由心迴轉善成門者謂金與師子或顯或隱或一或多各無自性由心迴轉　法無定法。",
        "from": "T45n1881_001:0670a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心轉變。",
        "from": "T45n1881_001:0670a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說理說事有成立　法本具足。",
        "from": "T45n1881_001:0670a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨機隱顯。",
        "from": "T45n1881_001:0670a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名由心迴轉善成門。",
        "from": "T45n1881_001:0670a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十託事顯法生解門者謂說師子用表無明論此金體具彰真性　覩萬法相用顯真理。",
        "from": "T45n1881_001:0670b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若理事合論況阿賴耶識令生正解　即染而淨。",
        "from": "T45n1881_001:0670b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動淨俱泯方為正解。",
        "from": "T45n1881_001:0670b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名託事顯法生解門。",
        "from": "T45n1881_001:0670b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八括六相者　謂師子是總相五根差別是別相共一緣起是同相眼耳各不相到是為異相諸根合會是成相諸緣各住自位是壞相　顯法界中無孤單法。",
        "from": "T45n1881_001:0670b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨舉一相。",
        "from": "T45n1881_001:0670b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具此六相緣起。",
        "from": "T45n1881_001:0670b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集成各無自性。",
        "from": "T45n1881_001:0670b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一相中含無盡相。",
        "from": "T45n1881_001:0670b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一法中具無盡法。",
        "from": "T45n1881_001:0670b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九成菩提者此云道也覺也　略說唐言。",
        "from": "T45n1881_001:0670b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此二義。",
        "from": "T45n1881_001:0670b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼見師子之時一切有為諸法更不待壞本來寂滅　喻師子相不實。",
        "from": "T45n1881_001:0670b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當體是金不可壞也。",
        "from": "T45n1881_001:0670b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸取捨即於此路流入薩婆若海故名為道也　諸法無生。",
        "from": "T45n1881_001:0670b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟空寂。",
        "from": "T45n1881_001:0670b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "包含無外。",
        "from": "T45n1881_001:0670b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不拒眾流。",
        "from": "T45n1881_001:0670b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大道無邊。",
        "from": "T45n1881_001:0670b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟則斯在。",
        "from": "T45n1881_001:0670b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故覩此師子相。",
        "from": "T45n1881_001:0670b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便入一切智海。",
        "from": "T45n1881_001:0670b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無異路。",
        "from": "T45n1881_001:0670b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薩婆若者此云無生智也。",
        "from": "T45n1881_001:0670b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即了無始已來所有顛倒元無實有名之為覺　妄起諸顛倒。",
        "from": "T45n1881_001:0670b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都無有實體。",
        "from": "T45n1881_001:0670b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正覺若現前。",
        "from": "T45n1881_001:0670b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如空皆寂滅。",
        "from": "T45n1881_001:0670b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即外無纖塵。",
        "from": "T45n1881_001:0670b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內無識念也。",
        "from": "T45n1881_001:0670b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟具一切種智名成菩提　一悟永悟。",
        "from": "T45n1881_001:0670b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一成永成。",
        "from": "T45n1881_001:0670b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大智現前更無餘物即成菩提也。",
        "from": "T45n1881_001:0670b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第十入涅槃者謂見師子與金二相俱盡　喻也。",
        "from": "T45n1881_001:0670b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱不生好醜現前　身心相盡煩惱不生。",
        "from": "T45n1881_001:0670c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即大涅槃究竟玄寂。",
        "from": "T45n1881_001:0670c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心安如海　經云。",
        "from": "T45n1881_001:0670c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能安心如海。",
        "from": "T45n1881_001:0670c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中好醜皆空無所住。",
        "from": "T45n1881_001:0670c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄想都盡無諸逼迫出纏離障永離苦源名為入涅槃也　妄盡全真。",
        "from": "T45n1881_001:0670c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無諸逼迫。",
        "from": "T45n1881_001:0670c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任逍遙出纏。",
        "from": "T45n1881_001:0670c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔惱不相侵奪。",
        "from": "T45n1881_001:0670c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離障法門無無滯礙湛然寂靜常安樂。",
        "from": "T45n1881_001:0670c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益群生出苦源。",
        "from": "T45n1881_001:0670c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今稽首獲無餘。",
        "from": "T45n1881_001:0670c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情同解脫。",
        "from": "T45n1881_001:0670c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肇公云。",
        "from": "T45n1881_001:0670c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功流萬世而常存。",
        "from": "T45n1881_001:0670c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道通百劫而彌固。",
        "from": "T45n1881_001:0670c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成山假就於始簀修途託至於初步果以功業不可杇故也。",
        "from": "T45n1881_001:0670c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然三乘之教有次第故。",
        "from": "T45n1881_001:0670c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓頓之理渾融無礙。",
        "from": "T45n1881_001:0670c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一法之上了一切法。",
        "from": "T45n1881_001:0670c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一行之中具一切行。",
        "from": "T45n1881_001:0670c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因該果海。",
        "from": "T45n1881_001:0670c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果徹因源。",
        "from": "T45n1881_001:0670c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果是即因之果。",
        "from": "T45n1881_001:0670c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因是即果之因。",
        "from": "T45n1881_001:0670c15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等無二相也。",
        "from": "T45n1881_001:0670c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云。",
        "from": "T45n1881_001:0670c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等真法界無佛無眾生矣。",
        "from": "T45n1881_001:0670c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣佛華嚴經金師子章一卷",
        "from": "T45n1881_001:0670c17_100",
        "context_with_next_sentence": false
    }
]