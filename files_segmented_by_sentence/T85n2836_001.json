[
    {
        "source_sentence": "大乘北宗論一卷",
        "from": "T85n2836_001:1281c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘心大乘心",
        "from": "T85n2836_001:1281c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起布施心　　何況慳貪心",
        "from": "T85n2836_001:1281c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起持戒心　　何況觸犯心",
        "from": "T85n2836_001:1281c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起忍辱心　　何況殺害心",
        "from": "T85n2836_001:1281c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起精進心　　何況懈怠心",
        "from": "T85n2836_001:1281c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起禪定心　　何況散亂心",
        "from": "T85n2836_001:1281c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起智慧心　　何況愚癡心",
        "from": "T85n2836_001:1281c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起天堂心　　何況地獄心",
        "from": "T85n2836_001:1281c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起慈悲心　　何況毒害心",
        "from": "T85n2836_001:1281c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起清淨心　　何況穢觸心",
        "from": "T85n2836_001:1281c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起歡喜心　　何況瞋恨心",
        "from": "T85n2836_001:1281c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起饒益心　　何況劫奪心",
        "from": "T85n2836_001:1281c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起廣大心　　何況狹身心",
        "from": "T85n2836_001:1281c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起空無心　　何況見取心",
        "from": "T85n2836_001:1281c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起正直心　　何況邪曲心",
        "from": "T85n2836_001:1281c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起真正心　　何況顛倒心",
        "from": "T85n2836_001:1281c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起大乘心　　何況聲聞心",
        "from": "T85n2836_001:1281c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起菩薩心　　何況凡夫心",
        "from": "T85n2836_001:1281c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起菩提心　　何況煩惱心",
        "from": "T85n2836_001:1281c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起解脫心　　何況解脫心",
        "from": "T85n2836_001:1281c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我尚不起涅槃心　　何況生死心",
        "from": "T85n2836_001:1281c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而重說偈。",
        "from": "T85n2836_001:1282a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂從心憂　　樂從心樂　　若妄於心",
        "from": "T85n2836_001:1282a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有文有字名曰生死　　無文無字名曰涅槃",
        "from": "T85n2836_001:1282a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有言有說名曰生死　　無言無說名曰涅槃",
        "from": "T85n2836_001:1282a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有修有學名曰生死　　無修無學名曰涅槃",
        "from": "T85n2836_001:1282a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有智有慧名曰生死　　無智無慧名曰涅槃",
        "from": "T85n2836_001:1282a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有嗔有法名曰生死　　無嗔無法名曰涅槃",
        "from": "T85n2836_001:1282a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有戒有律名曰生死　　無戒無律名曰涅槃",
        "from": "T85n2836_001:1282a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有為有作名曰生死　　無為無作名曰涅槃",
        "from": "T85n2836_001:1282a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷煩惱名曰生死　　不斷煩惱名曰涅槃",
        "from": "T85n2836_001:1282a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見解脫名曰生死　　不見解脫名曰涅槃",
        "from": "T85n2836_001:1282a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見涅槃名曰生死　　不見涅槃名曰涅槃",
        "from": "T85n2836_001:1282a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭世間名曰生死　　不厭世間名曰涅槃",
        "from": "T85n2836_001:1282a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂大乘名曰生死　　不樂大乘名曰涅槃",
        "from": "T85n2836_001:1282a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見波羅蜜名曰生死　　不見波羅蜜名曰涅",
        "from": "T85n2836_001:1282a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "槃大乘有十也。",
        "from": "T85n2836_001:1282a18_5",
        "context_with_next_sentence": true
    }
]