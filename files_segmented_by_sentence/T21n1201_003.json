[
    {
        "source_sentence": "底哩三昧耶不動尊聖者念誦祕",
        "from": "T21n1201_003:0020b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密法卷下",
        "from": "T21n1201_003:0020b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺三藏沙門不空奉　詔譯",
        "from": "T21n1201_003:0020b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛堅固內相叉　　是名寶山身密印",
        "from": "T21n1201_003:0020b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種供養并護身　　加持本明頂上散",
        "from": "T21n1201_003:0020b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪度入掌把為拳　　置安頂上名頭印",
        "from": "T21n1201_003:0020b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思此全身聖者前　　靜坐安心作觀照",
        "from": "T21n1201_003:0020b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒方檀慧內相叉　　忍願堅合進力附",
        "from": "T21n1201_003:0020b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智二度背相著　　屈入戒方相叉內",
        "from": "T21n1201_003:0020b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與二無名面相著　　舉印置安左髻中",
        "from": "T21n1201_003:0020b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名無動金剛髻4 無動金剛眼印無動金剛眼印第四準前髻印。",
        "from": "T21n1201_003:0020b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻手倒垂至額前。",
        "from": "T21n1201_003:0020b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即名無動金剛眼。",
        "from": "T21n1201_003:0020b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧二度內相叉　　戒方雙押內叉上",
        "from": "T21n1201_003:0020b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願竪合進力附　　禪捻戒背智捻方",
        "from": "T21n1201_003:0020b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒方檀慧內相叉　　忍願竪合屈進力",
        "from": "T21n1201_003:0020b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智並捻忍願文　　是名無動金剛心",
        "from": "T21n1201_003:0020b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前無動金剛甲　　唯改進力頭相拄",
        "from": "T21n1201_003:0020b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起立頻伸虎舞勢　　遶壇行道辟除魔",
        "from": "T21n1201_003:0020b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子頻伸大奮迅　　是名五股金剛印",
        "from": "T21n1201_003:0020c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪捻三度背為拳　　進度獨舒指定掌",
        "from": "T21n1201_003:0020c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散開五度如猛焰　　是名無動金剛火",
        "from": "T21n1201_003:0020c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二羽各如無動劍　　掌內鉤鎖狀猶環",
        "from": "T21n1201_003:0020c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願竪合頭相拄　　進興忍背重相著",
        "from": "T21n1201_003:0020c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力度願背亦如是　　是名無動法螺印",
        "from": "T21n1201_003:0020c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪捻三度背為拳　　進度直舒觀羽握",
        "from": "T21n1201_003:0020c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力度屈捻智如環　　是名無動金剛索",
        "from": "T21n1201_003:0020c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰。",
        "from": "T21n1201_003:0020c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無動金剛劍印明　　能成就一切事業",
        "from": "T21n1201_003:0020c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰。",
        "from": "T21n1201_003:0020c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿者羅迦拏引勃馱制吒迦吽吽佉醯佉醯伊能魚哩二合醯摩𤚥賀唎尾沙索鉢多二合惡紇哩二合訶吽引泮吒阿哩耶二合者羅阿引蘖車緊至羅夜思伊引能迦哩羅耶二合句嚕耶麼莎縛二合訶持明行者每常食時。",
        "from": "T21n1201_003:0020c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出一分殘食供養本尊像。",
        "from": "T21n1201_003:0020c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜擁護所求皆得終不空過。",
        "from": "T21n1201_003:0020c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦無動金剛根本明。",
        "from": "T21n1201_003:0020c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "11 無動金剛解界明印無動金剛解界明印第十一持明行者念誦了。",
        "from": "T21n1201_003:0020c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即解前所結火界及牆界已。",
        "from": "T21n1201_003:0020c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂印竪二小指頭相拄是也。",
        "from": "T21n1201_003:0020c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當誦燈焰如來解界明。",
        "from": "T21n1201_003:0020c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印左轉即成解界。",
        "from": "T21n1201_003:0020c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前火院界是也。",
        "from": "T21n1201_003:0020c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈焰如來解界真言曰。",
        "from": "T21n1201_003:0020c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩麼悉底哩也二合陀嚩拏哦哆喃唵紇哩二合誦密語已。",
        "from": "T21n1201_003:0021a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重以香花如法供養懺悔三業。",
        "from": "T21n1201_003:0021a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結部母印。",
        "from": "T21n1201_003:0021a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身方可起去。",
        "from": "T21n1201_003:0021a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉誦大乘方廣理趣。",
        "from": "T21n1201_003:0021a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸善事隨修行。",
        "from": "T21n1201_003:0021a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持明行者每欲食時。",
        "from": "T21n1201_003:0021a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以事業金剛真言。",
        "from": "T21n1201_003:0021a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持自身中種子。",
        "from": "T21n1201_003:0021a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加鑁字復誦十力明八遍乃食之明曰。",
        "from": "T21n1201_003:0021a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩麼三曼哆鑁十力明曰。",
        "from": "T21n1201_003:0021a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨薩嚩母馱󰂛地薩怛嚩二合喃唵麼蘭捺泥帝引孺𢖲㗚寧莎縛二合訶如是先成就本尊訖所餘觸食以成辦諸事心明。",
        "from": "T21n1201_003:0021a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養所應食者。",
        "from": "T21n1201_003:0021a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當用不空威怒增加聖者不動尊明。",
        "from": "T21n1201_003:0021a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一遍。",
        "from": "T21n1201_003:0021a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受者歡喜當隨行者而護念之。",
        "from": "T21n1201_003:0021a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日如是供養不得斷絕。",
        "from": "T21n1201_003:0021a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得本尊護念。",
        "from": "T21n1201_003:0021a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔不能為害。",
        "from": "T21n1201_003:0021a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施食已。",
        "from": "T21n1201_003:0021a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如常禮懺依法念誦。",
        "from": "T21n1201_003:0021a17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中夜分欲消息時。",
        "from": "T21n1201_003:0021a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結先莊嚴印。",
        "from": "T21n1201_003:0021a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧手翻掌彎心上　　定掌還來心上合",
        "from": "T21n1201_003:0021a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持本明安頂上　　便開二手順身摩",
        "from": "T21n1201_003:0021a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除障難得成就　　以護身故名莊嚴",
        "from": "T21n1201_003:0021a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光莊嚴明曰。",
        "from": "T21n1201_003:0021a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩麼悉底哩也四合陀嚩二合拏伽哆喃薩嚩怛他蘖哆喃摩訶三昧耶伽底伽帝三曼帝三摩蘖羅嚩二合摩他薩羅婆多羅二合路計達麼馱埵底多僧伽帝莎嚩二合訶作前法已。",
        "from": "T21n1201_003:0021a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如過去燃燈佛禮拜法。",
        "from": "T21n1201_003:0021a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌長舒二臂於頂上。",
        "from": "T21n1201_003:0021a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面東令面著地。",
        "from": "T21n1201_003:0021a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長展二足以心著地。",
        "from": "T21n1201_003:0021b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是禮拜時。",
        "from": "T21n1201_003:0021b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀念一切諸佛菩薩。",
        "from": "T21n1201_003:0021b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願攝受我等作最上成就。",
        "from": "T21n1201_003:0021b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍故。",
        "from": "T21n1201_003:0021b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三迴已後隨意消息。",
        "from": "T21n1201_003:0021b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心念明相作速成就相。",
        "from": "T21n1201_003:0021b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "7 無動金剛事業求願品無動金剛事業求願第七爾時釋迦牟尼佛。",
        "from": "T21n1201_003:0021b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告執金剛菩薩言。",
        "from": "T21n1201_003:0021b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為汝說無量神通力無動金剛法。",
        "from": "T21n1201_003:0021b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能利益成就一切事業。",
        "from": "T21n1201_003:0021b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修行者菜食長齋或菓子等。",
        "from": "T21n1201_003:0021b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦滿一萬遍已。",
        "from": "T21n1201_003:0021b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月八日或十五日。",
        "from": "T21n1201_003:0021b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日一夜大作供養。",
        "from": "T21n1201_003:0021b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於像前取苦練木和蘇燒。",
        "from": "T21n1201_003:0021b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一呪一燒滿一千八遍。",
        "from": "T21n1201_003:0021b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此法已。",
        "from": "T21n1201_003:0021b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後所作一切事法。",
        "from": "T21n1201_003:0021b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得成就。",
        "from": "T21n1201_003:0021b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者出語令縛即縛。",
        "from": "T21n1201_003:0021b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及問事等。",
        "from": "T21n1201_003:0021b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能摧折樹木墮落飛鳥能令一切泉池枯渴。",
        "from": "T21n1201_003:0021b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能令人鬪諍獲勝。",
        "from": "T21n1201_003:0021b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此已亦能團風而為一團。",
        "from": "T21n1201_003:0021b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於月蝕夜。",
        "from": "T21n1201_003:0021b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取未著地牛糞塗曼荼羅。",
        "from": "T21n1201_003:0021b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種香花散於壇上。",
        "from": "T21n1201_003:0021b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置大般若經。",
        "from": "T21n1201_003:0021b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前取純色犢子牸牛蘇一兩。",
        "from": "T21n1201_003:0021b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置熟銅椀中。",
        "from": "T21n1201_003:0021b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取佉陀羅木為齒木。",
        "from": "T21n1201_003:0021b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并攪蘇明不限遍數。",
        "from": "T21n1201_003:0021b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令種種成就。",
        "from": "T21n1201_003:0021b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又山峯頂上不喫食。",
        "from": "T21n1201_003:0021b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦滿十萬遍。",
        "from": "T21n1201_003:0021b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得見一切伏藏。",
        "from": "T21n1201_003:0021b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用乳作火法誦一千八遍。",
        "from": "T21n1201_003:0021b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沃火燒能除疫病。",
        "from": "T21n1201_003:0021b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若共一切人論議。",
        "from": "T21n1201_003:0021b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得彼人口噤不論。",
        "from": "T21n1201_003:0021b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取句瀘草和蘇乳蜜。",
        "from": "T21n1201_003:0021b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持沃火中燒誦十萬遍。",
        "from": "T21n1201_003:0021b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能除大疫病。",
        "from": "T21n1201_003:0021b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取蓮花和蘇酪蜜。",
        "from": "T21n1201_003:0021b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦明沃火中燒誦明十萬遍。",
        "from": "T21n1201_003:0021b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華吉祥天與行者願。",
        "from": "T21n1201_003:0021b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於臨近海河口。",
        "from": "T21n1201_003:0021b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入水至胸誦明三十萬遍得尾沙耶。",
        "from": "T21n1201_003:0021b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又誦明以華擲火中燒。",
        "from": "T21n1201_003:0021c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨華色得衣。",
        "from": "T21n1201_003:0021c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒穀米得穀米。",
        "from": "T21n1201_003:0021c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取尾邏縛木誦明燒十萬遍。",
        "from": "T21n1201_003:0021c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得囉闍。",
        "from": "T21n1201_003:0021c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取必哩養隅木誦明燒。",
        "from": "T21n1201_003:0021c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令一切人愛念。",
        "from": "T21n1201_003:0021c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明柏木燒。",
        "from": "T21n1201_003:0021c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得無量僕從。",
        "from": "T21n1201_003:0021c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明大麥燒。",
        "from": "T21n1201_003:0021c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得為大長者。",
        "from": "T21n1201_003:0021c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說畫像法。",
        "from": "T21n1201_003:0021c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫無動尊。",
        "from": "T21n1201_003:0021c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身著赤土色帬衣。",
        "from": "T21n1201_003:0021c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左垂辮髻。",
        "from": "T21n1201_003:0021c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼斜視。",
        "from": "T21n1201_003:0021c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執劍索坐寶蓮華。",
        "from": "T21n1201_003:0021c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚬眉嗔面作怖三世狀。",
        "from": "T21n1201_003:0021c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是畫已。",
        "from": "T21n1201_003:0021c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於流水河海岸上如法安像。",
        "from": "T21n1201_003:0021c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者自身亦著赤色衣。",
        "from": "T21n1201_003:0021c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無染著寂靜乞食為活。",
        "from": "T21n1201_003:0021c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於像前誦五十萬遍畢已。",
        "from": "T21n1201_003:0021c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於夜中以薝蔔木火燒。",
        "from": "T21n1201_003:0021c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一明一燒擲火中滿一萬遍。",
        "from": "T21n1201_003:0021c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見無動聖者。",
        "from": "T21n1201_003:0021c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現前自身得為如來使者。",
        "from": "T21n1201_003:0021c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得三摩地共菩薩同位。",
        "from": "T21n1201_003:0021c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取尸陀林中帛畫無動金剛像。",
        "from": "T21n1201_003:0021c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自身血淡作色。",
        "from": "T21n1201_003:0021c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置像面向西著。",
        "from": "T21n1201_003:0021c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者面向東坐念誦每時三時澡浴著濕衣。",
        "from": "T21n1201_003:0021c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對像面前誦明十萬遍。",
        "from": "T21n1201_003:0021c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即施一切鬼神食。",
        "from": "T21n1201_003:0021c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於黑月八日夜。",
        "from": "T21n1201_003:0021c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取摩奴沙。",
        "from": "T21n1201_003:0021c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐其上。",
        "from": "T21n1201_003:0021c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦明一萬遍已。",
        "from": "T21n1201_003:0021c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼摩奴沙動身。",
        "from": "T21n1201_003:0021c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者必不得怕。",
        "from": "T21n1201_003:0021c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼口現出大開敷蓮華即把取。",
        "from": "T21n1201_003:0021c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令行者身如十五六童子。",
        "from": "T21n1201_003:0021c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髻如連環遊歷天地得大明王。",
        "from": "T21n1201_003:0021c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於像前每日二時。",
        "from": "T21n1201_003:0021c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦隨力供養燒沈水香。",
        "from": "T21n1201_003:0021c24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是滿足六月。",
        "from": "T21n1201_003:0021c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自見得尾沙耶主。",
        "from": "T21n1201_003:0021c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取旗幡誦明一千遍。",
        "from": "T21n1201_003:0021c25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執於軍陣前能破他陣。",
        "from": "T21n1201_003:0021c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法欲禁他軍令不得動者。",
        "from": "T21n1201_003:0021c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於旗幡上畫無動尊。",
        "from": "T21n1201_003:0021c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身作黃肉色四面上下出牙。",
        "from": "T21n1201_003:0021c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四臂作怖畏瞋怒狀。",
        "from": "T21n1201_003:0021c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍身火焰。",
        "from": "T21n1201_003:0021c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作吞他兵勢。",
        "from": "T21n1201_003:0021c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持法人以旗示彼人。",
        "from": "T21n1201_003:0022a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想聖者以羂索縛彼兵眾。",
        "from": "T21n1201_003:0022a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼即無能動也。",
        "from": "T21n1201_003:0022a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面無動金剛明曰。",
        "from": "T21n1201_003:0022a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩麼三曼哆嚩日羅二合𧹞始麼二合舍囊悉體二合迦播羅楞訖哩二合哆戶怛嚩賀姥儞𡁠嚩引路囉馱縛二合能瑟吒邏二合迦囉邏娜捨曩步惹誐跛哩吠瑟徵擔捨唎邏底榮捺囉曩野曩迦賀護姥訖哆二合吒賀三者咄姥佉尾訖哩二合怛嚕引跛莽賀避沙拏也怛儞也二合他唵尾訖哩哆尾迦吒尾迦邏摩賀囉𠼐二合哆尾瑟他姥怛羅契駐尼去反齒瑟吒賀囉案怛囉莽羅馱羅者咄姥母佉入嚩二合邏那比路馱嚩二合計奢吽嚩日囉二合嚩日㘑二合蘖羅二合吽泮吒莎嚩二合訶若欲令他相鬪者。",
        "from": "T21n1201_003:0022a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取鳥鴿鵄梟羽明燒。",
        "from": "T21n1201_003:0022a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得鬪諍。",
        "from": "T21n1201_003:0022a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲令燒設都嚕卒者。",
        "from": "T21n1201_003:0022a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取稻糠燒當燒之時。",
        "from": "T21n1201_003:0022a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想聖者以索縛彼捨都嚕。",
        "from": "T21n1201_003:0022a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將向南方困苦吐血。",
        "from": "T21n1201_003:0022a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等族類皆不得存也。",
        "from": "T21n1201_003:0022a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法欲令設都嚕卒取土鹽蠟。",
        "from": "T21n1201_003:0022a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦練葉相和擣為泥。",
        "from": "T21n1201_003:0022a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻作彼形狀。",
        "from": "T21n1201_003:0022a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置地上斫斷。",
        "from": "T21n1201_003:0022a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即卒。",
        "from": "T21n1201_003:0022a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若明稻穀燒。",
        "from": "T21n1201_003:0022a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼捨都嚕即貧窮。",
        "from": "T21n1201_003:0022a22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲令大人愛樂者。",
        "from": "T21n1201_003:0022a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以鹽作彼形狀段段斫之。",
        "from": "T21n1201_003:0022a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦滿七日。",
        "from": "T21n1201_003:0022a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼即愛樂。",
        "from": "T21n1201_003:0022a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取俱蘇摩花明燒十萬遍。",
        "from": "T21n1201_003:0022a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得夜叉女來。",
        "from": "T21n1201_003:0022a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三事中所求皆得。",
        "from": "T21n1201_003:0022a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又明曼荼羅花。",
        "from": "T21n1201_003:0022a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱彼人名即令橫亂。",
        "from": "T21n1201_003:0022a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明鹽燒。",
        "from": "T21n1201_003:0022a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得天女來所使隨意。",
        "from": "T21n1201_003:0022a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明安息香燒者。",
        "from": "T21n1201_003:0022a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得闍羅歡喜。",
        "from": "T21n1201_003:0022a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又畫像法。",
        "from": "T21n1201_003:0022a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先畫釋迦牟尼佛像。",
        "from": "T21n1201_003:0022a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫文殊師利童子像。",
        "from": "T21n1201_003:0022b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫執金剛菩薩作微㗛面。",
        "from": "T21n1201_003:0022b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執金剛杵。",
        "from": "T21n1201_003:0022b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於執金剛下。",
        "from": "T21n1201_003:0022b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫無動聖者種種莊嚴。",
        "from": "T21n1201_003:0022b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於彼前誦明五十萬遍。",
        "from": "T21n1201_003:0022b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後作一切事皆得稱意。",
        "from": "T21n1201_003:0022b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲令降他兵。",
        "from": "T21n1201_003:0022b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結無動聖者眼印。",
        "from": "T21n1201_003:0022b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作瞋怒聲稱吽字。",
        "from": "T21n1201_003:0022b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心想令魍魎捉彼。",
        "from": "T21n1201_003:0022b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃降。",
        "from": "T21n1201_003:0022b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取尸陀林灰加持七遍。",
        "from": "T21n1201_003:0022b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與彼人即得愛樂。",
        "from": "T21n1201_003:0022b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取牛黃加持七遍。",
        "from": "T21n1201_003:0022b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "點自身額上。",
        "from": "T21n1201_003:0022b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾人見者愛樂。",
        "from": "T21n1201_003:0022b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘那夜迦不能損害。",
        "from": "T21n1201_003:0022b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熾焰成就故。",
        "from": "T21n1201_003:0022b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於己身上布明梵字。",
        "from": "T21n1201_003:0022b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼羅剎眾退散百由旬外又被毒蛇。",
        "from": "T21n1201_003:0022b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經半年不差明之即差。",
        "from": "T21n1201_003:0022b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於壁上畫劍契。",
        "from": "T21n1201_003:0022b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又畫句律迦大蛇纏劍上。",
        "from": "T21n1201_003:0022b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其劍周圍有火焰。",
        "from": "T21n1201_003:0022b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即加持千遍。",
        "from": "T21n1201_003:0022b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以示病者。",
        "from": "T21n1201_003:0022b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病者即下語。",
        "from": "T21n1201_003:0022b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持一百八遍。",
        "from": "T21n1201_003:0022b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病者常蒙聖者擁護。",
        "from": "T21n1201_003:0022b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日加持殘食。",
        "from": "T21n1201_003:0022b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置淨處供養聖者。",
        "from": "T21n1201_003:0022b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得如願。",
        "from": "T21n1201_003:0022b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者瞋怒結心印稱吽字。",
        "from": "T21n1201_003:0022b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切惡雲退散。",
        "from": "T21n1201_003:0022b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取棘針。",
        "from": "T21n1201_003:0022b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和羅視迦油明燒能止大雨。",
        "from": "T21n1201_003:0022b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令行者成結大界。",
        "from": "T21n1201_003:0022b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦成就千種事業。",
        "from": "T21n1201_003:0022b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說無動尊金剛畫像法。",
        "from": "T21n1201_003:0022b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身著赤土色衣。",
        "from": "T21n1201_003:0022b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左垂辮髻斜視童子狀。",
        "from": "T21n1201_003:0022b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執金剛杵及寶棒。",
        "from": "T21n1201_003:0022b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼微赤坐石上。",
        "from": "T21n1201_003:0022b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋怒遍身火焰。",
        "from": "T21n1201_003:0022b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於像前結愛樂一切印契。",
        "from": "T21n1201_003:0022b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得成就。",
        "from": "T21n1201_003:0022b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依前法作所樂騰空隱形及所愛法。",
        "from": "T21n1201_003:0022b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意成就縱無畫像。",
        "from": "T21n1201_003:0022b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨處閑靜或在寺中或山窟中離雜閙處。",
        "from": "T21n1201_003:0022b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求者一切皆得成就。",
        "from": "T21n1201_003:0022b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持患瘧病者。",
        "from": "T21n1201_003:0022b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即自縛下語。",
        "from": "T21n1201_003:0022b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持鏡亦得像。",
        "from": "T21n1201_003:0022b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現問事皆說。",
        "from": "T21n1201_003:0022b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取童子或童女置道場中。",
        "from": "T21n1201_003:0022c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召神入令下壇中。",
        "from": "T21n1201_003:0022c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問一切事皆得。",
        "from": "T21n1201_003:0022c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次欲成就繫迦羅法。",
        "from": "T21n1201_003:0022c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月一日日中時著種種香華。",
        "from": "T21n1201_003:0022c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養不歇誦明一百八遍。",
        "from": "T21n1201_003:0022c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念壇中一切諸佛菩薩。",
        "from": "T21n1201_003:0022c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日念誦滿一月日。",
        "from": "T21n1201_003:0022c05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法供養已。",
        "from": "T21n1201_003:0022c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用苦練木柴燒火。",
        "from": "T21n1201_003:0022c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遏迦木上塗蘇。",
        "from": "T21n1201_003:0022c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白芥子加持燒火從黃昏。",
        "from": "T21n1201_003:0022c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒火至夜半。",
        "from": "T21n1201_003:0022c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至日出。",
        "from": "T21n1201_003:0022c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫迦攞即來語行者言。",
        "from": "T21n1201_003:0022c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使我作何事。",
        "from": "T21n1201_003:0022c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者攝受已後。",
        "from": "T21n1201_003:0022c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常隨行者所使必得隨順。",
        "from": "T21n1201_003:0022c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至使往天上取天女。",
        "from": "T21n1201_003:0022c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即將來所須飲食齒木水等。",
        "from": "T21n1201_003:0022c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得給侍。",
        "from": "T21n1201_003:0022c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底哩三昧耶無動尊聖者念誦祕密法卷下復次如前建立曼荼羅。",
        "from": "T21n1201_003:0022c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應取一千蓮華。",
        "from": "T21n1201_003:0022c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一華一誦安中台以為奉獻。",
        "from": "T21n1201_003:0022c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後引弟子。",
        "from": "T21n1201_003:0022c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入告三昧耶言為諸欲清淨誓羯磨曼荼羅品。",
        "from": "T21n1201_003:0022c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次成就像法。",
        "from": "T21n1201_003:0022c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於清淨絹㲲上畫觀自在菩薩。",
        "from": "T21n1201_003:0022c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅蘇彌盧頂八佛圍遶白月一日於此像前。",
        "from": "T21n1201_003:0022c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延享三丙寅年秋七月。",
        "from": "T21n1201_003:0022c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　豐山長谷輪下無等誌",
        "from": "T21n1201_003:0022c22_0",
        "context_with_next_sentence": true
    }
]