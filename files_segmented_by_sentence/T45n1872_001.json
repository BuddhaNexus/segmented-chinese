[
    {
        "source_sentence": "華嚴策林",
        "from": "T45n1872_001:0597a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右唐賢首國師述",
        "from": "T45n1872_001:0597a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫華嚴宗旨。其義不一。究其了說。總明因果",
        "from": "T45n1872_001:0597a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二門。",
        "from": "T45n1872_001:0597a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因即普賢行願。",
        "from": "T45n1872_001:0597a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果即舍那業用。",
        "from": "T45n1872_001:0597a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸界為體。",
        "from": "T45n1872_001:0597a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣起為用。",
        "from": "T45n1872_001:0597a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體用全收。",
        "from": "T45n1872_001:0597a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓通一際。",
        "from": "T45n1872_001:0597a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語其所以。",
        "from": "T45n1872_001:0597a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出緣起。",
        "from": "T45n1872_001:0597a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以義迴轉。",
        "from": "T45n1872_001:0597a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎔達有空。",
        "from": "T45n1872_001:0597a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨智鑑用。",
        "from": "T45n1872_001:0597a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說多門。",
        "from": "T45n1872_001:0597a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨體湛宗。",
        "from": "T45n1872_001:0597a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說一義。",
        "from": "T45n1872_001:0597a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若論玄旨。",
        "from": "T45n1872_001:0597a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一多不可。",
        "from": "T45n1872_001:0597a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然以不為了一不多為了多。",
        "from": "T45n1872_001:0597a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒存常空常有。",
        "from": "T45n1872_001:0597a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大況如此。",
        "from": "T45n1872_001:0597a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粗陳梗概。",
        "from": "T45n1872_001:0597a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今就要義。",
        "from": "T45n1872_001:0597a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略申問答。",
        "from": "T45n1872_001:0597a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但述大意。",
        "from": "T45n1872_001:0597a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘屬經文。",
        "from": "T45n1872_001:0597a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶得道君子。",
        "from": "T45n1872_001:0597a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "探其趣焉。",
        "from": "T45n1872_001:0597a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　一徵普眼　二明理事　三辨正因　四融大小　五結成壞　六通二界　七明隱顯　八明因果　九達色空一徵普眼一徵普眼問眼色相依。",
        "from": "T45n1872_001:0597a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應有其事。",
        "from": "T45n1872_001:0597a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根塵和合。",
        "from": "T45n1872_001:0597a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其旨非無。",
        "from": "T45n1872_001:0597a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣會現時。",
        "from": "T45n1872_001:0597a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何得不𫮧境。",
        "from": "T45n1872_001:0597a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何方名普眼　私答曰五緣為因。",
        "from": "T45n1872_001:0597a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱眼為果。",
        "from": "T45n1872_001:0597a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若緣發現。",
        "from": "T45n1872_001:0597a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以緣名為眼。",
        "from": "T45n1872_001:0597a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以因沒果中。",
        "from": "T45n1872_001:0597a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣皆號眼。",
        "from": "T45n1872_001:0597a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則全色為眼。",
        "from": "T45n1872_001:0597a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒見而無緣。",
        "from": "T45n1872_001:0597a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全眼為色。",
        "from": "T45n1872_001:0597a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒稱見而非我。",
        "from": "T45n1872_001:0597a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非我離於情想。",
        "from": "T45n1872_001:0597a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無緣絕於貪求。",
        "from": "T45n1872_001:0597a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收萬象於目前。",
        "from": "T45n1872_001:0597a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全十方於眼際。",
        "from": "T45n1872_001:0597a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以緣義無盡。",
        "from": "T45n1872_001:0597a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨見見而不究。",
        "from": "T45n1872_001:0597a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物性難見思。",
        "from": "T45n1872_001:0597a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應法法而難准。",
        "from": "T45n1872_001:0597a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十法則眼普義通。",
        "from": "T45n1872_001:0597a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃見通體久自隱。",
        "from": "T45n1872_001:0597a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱照之遂重重。",
        "from": "T45n1872_001:0597a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然究十方於眼際。",
        "from": "T45n1872_001:0597a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏡空有而皎明。",
        "from": "T45n1872_001:0597a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收萬象以成身。",
        "from": "T45n1872_001:0597a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現理事而通徹。",
        "from": "T45n1872_001:0597a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹對。",
        "from": "T45n1872_001:0597a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二明理事二明理事問緣起事相。",
        "from": "T45n1872_001:0597b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分齊歷然。",
        "from": "T45n1872_001:0597b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界理性。",
        "from": "T45n1872_001:0597b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有所。",
        "from": "T45n1872_001:0597b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以存壞一。",
        "from": "T45n1872_001:0597b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體用不巧。",
        "from": "T45n1872_001:0597b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦通事理。",
        "from": "T45n1872_001:0597b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "收為不二。",
        "from": "T45n1872_001:0597b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為祛茲弊。",
        "from": "T45n1872_001:0597b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶皎玄宗　私對。",
        "from": "T45n1872_001:0597b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣起事相。",
        "from": "T45n1872_001:0597b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必收性而方成。",
        "from": "T45n1872_001:0597b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界玄宗。",
        "from": "T45n1872_001:0597b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦依緣而現空。",
        "from": "T45n1872_001:0597b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有有交徹。",
        "from": "T45n1872_001:0597b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體用玄通。",
        "from": "T45n1872_001:0597b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言事即有徹空源。",
        "from": "T45n1872_001:0597b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "談有乃空透有表。",
        "from": "T45n1872_001:0597b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時雙奪。",
        "from": "T45n1872_001:0597b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纖毫之論不具。",
        "from": "T45n1872_001:0597b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時相成。",
        "from": "T45n1872_001:0597b07_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大之談並見。",
        "from": "T45n1872_001:0597b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現全收事全奪事而為理。",
        "from": "T45n1872_001:0597b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事非別事。",
        "from": "T45n1872_001:0597b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物具理而為事。",
        "from": "T45n1872_001:0597b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何方空隨有現理遂事彰。",
        "from": "T45n1872_001:0597b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一際通觀。",
        "from": "T45n1872_001:0597b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬物可定者矣。",
        "from": "T45n1872_001:0597b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹對。",
        "from": "T45n1872_001:0597b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三辨正因三辨正因問今時修道入行。",
        "from": "T45n1872_001:0597b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必應見佛求法。",
        "from": "T45n1872_001:0597b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從因至果。",
        "from": "T45n1872_001:0597b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "函蓋相依。",
        "from": "T45n1872_001:0597b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見三十二相為因。",
        "from": "T45n1872_001:0597b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂即無相可覩。",
        "from": "T45n1872_001:0597b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若詮一空為因。",
        "from": "T45n1872_001:0597b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後恐理事懸別。",
        "from": "T45n1872_001:0597b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請辨其佛之因。",
        "from": "T45n1872_001:0597b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希聞成佛之果　私對。",
        "from": "T45n1872_001:0597b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛以無生空寂為身。",
        "from": "T45n1872_001:0597b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以法界無起為體。",
        "from": "T45n1872_001:0597b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但證此理。",
        "from": "T45n1872_001:0597b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛隨理以現身。",
        "from": "T45n1872_001:0597b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但入無生。",
        "from": "T45n1872_001:0597b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法隨智以顯相。",
        "from": "T45n1872_001:0597b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相即無相。",
        "from": "T45n1872_001:0597b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色身未足失理。",
        "from": "T45n1872_001:0597b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無則不無。",
        "from": "T45n1872_001:0597b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空門何得為寔。",
        "from": "T45n1872_001:0597b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久離寂默。",
        "from": "T45n1872_001:0597b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三世之所未審。",
        "from": "T45n1872_001:0597b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當已去色聲。",
        "from": "T45n1872_001:0597b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根之所罕接。",
        "from": "T45n1872_001:0597b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後證心內。",
        "from": "T45n1872_001:0597b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照理成佛。",
        "from": "T45n1872_001:0597b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦同成靜息外緣。",
        "from": "T45n1872_001:0597b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智就法亦同就。",
        "from": "T45n1872_001:0597b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因滿即果。",
        "from": "T45n1872_001:0597b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "克發心已成正覺之基。",
        "from": "T45n1872_001:0597b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果滿即因成。",
        "from": "T45n1872_001:0597b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得道蓋自初心之本。",
        "from": "T45n1872_001:0597b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何必全因至果。",
        "from": "T45n1872_001:0597b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐招所得之基全理事。",
        "from": "T45n1872_001:0597b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將涉有性之論。",
        "from": "T45n1872_001:0597b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹對。",
        "from": "T45n1872_001:0597b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四融大小四融大小問有大有小。",
        "from": "T45n1872_001:0597b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相狀歷然。",
        "from": "T45n1872_001:0597b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一廣一陜。",
        "from": "T45n1872_001:0597b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事物差別。",
        "from": "T45n1872_001:0597b26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以小收大。",
        "from": "T45n1872_001:0597b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或恐大失本形。",
        "from": "T45n1872_001:0597b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以大收小。",
        "from": "T45n1872_001:0597b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦恐小傷無質。",
        "from": "T45n1872_001:0597b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寬隘即其不等。",
        "from": "T45n1872_001:0597b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入何得相容。",
        "from": "T45n1872_001:0597b28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮却蒙雲。",
        "from": "T45n1872_001:0597b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皎斯智日　私對。",
        "from": "T45n1872_001:0597b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大必收小方得名大。",
        "from": "T45n1872_001:0597c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小必容大乃得小稱。",
        "from": "T45n1872_001:0597c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各無自性。",
        "from": "T45n1872_001:0597c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大小所以相容。",
        "from": "T45n1872_001:0597c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並不竟成。",
        "from": "T45n1872_001:0597c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣陜以之齊納。",
        "from": "T45n1872_001:0597c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是知大是小大。",
        "from": "T45n1872_001:0597c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小是大小。",
        "from": "T45n1872_001:0597c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小無定性。",
        "from": "T45n1872_001:0597c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終自遍於十方。",
        "from": "T45n1872_001:0597c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大非定形。",
        "from": "T45n1872_001:0597c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫皎於一世。",
        "from": "T45n1872_001:0597c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知小時正大芥子納於須彌。",
        "from": "T45n1872_001:0597c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大時正小。",
        "from": "T45n1872_001:0597c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海水納於毛孔。",
        "from": "T45n1872_001:0597c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不各壞性。",
        "from": "T45n1872_001:0597c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出入何得不備。",
        "from": "T45n1872_001:0597c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以皆存本形。",
        "from": "T45n1872_001:0597c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒卷自然無礙。",
        "from": "T45n1872_001:0597c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹對。",
        "from": "T45n1872_001:0597c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五結成壞五結成壞問成壞之義。",
        "from": "T45n1872_001:0597c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其勢雖明。",
        "from": "T45n1872_001:0597c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "差別異陳。",
        "from": "T45n1872_001:0597c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復乖其致。",
        "from": "T45n1872_001:0597c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者成時壞居何所。",
        "from": "T45n1872_001:0597c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞時成在何方。",
        "from": "T45n1872_001:0597c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若異聖乃不容。",
        "from": "T45n1872_001:0597c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若同凡又不信。",
        "from": "T45n1872_001:0597c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請以珠玉來酬。",
        "from": "T45n1872_001:0597c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祛茲瓦礫　私對。",
        "from": "T45n1872_001:0597c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞即成處壞。",
        "from": "T45n1872_001:0597c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦壞即成法界。",
        "from": "T45n1872_001:0597c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空而恒有。",
        "from": "T45n1872_001:0597c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存壞即有徹於空壞。",
        "from": "T45n1872_001:0597c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實存即空彰於有表。",
        "from": "T45n1872_001:0597c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後異亦不異同。",
        "from": "T45n1872_001:0597c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體之自皎明。",
        "from": "T45n1872_001:0597c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷之自蒙昧。",
        "from": "T45n1872_001:0597c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以性端結空有二邊。",
        "from": "T45n1872_001:0597c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以智照來通成壞一際。",
        "from": "T45n1872_001:0597c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹對。",
        "from": "T45n1872_001:0597c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六通二界六通二界問眾生為迷。",
        "from": "T45n1872_001:0597c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛為悟。",
        "from": "T45n1872_001:0597c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體雖是一。",
        "from": "T45n1872_001:0597c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約用有差。",
        "from": "T45n1872_001:0597c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以眾生通佛。",
        "from": "T45n1872_001:0597c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛合迷。",
        "from": "T45n1872_001:0597c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以佛通眾生。",
        "from": "T45n1872_001:0597c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生合悟。",
        "from": "T45n1872_001:0597c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冀拂塵鏡以顯大明。",
        "from": "T45n1872_001:0597c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "庶闢玄關。",
        "from": "T45n1872_001:0597c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開為暗室　私對曰。",
        "from": "T45n1872_001:0597c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒以非眾生為眾生。",
        "from": "T45n1872_001:0597c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦非諸佛為諸佛。",
        "from": "T45n1872_001:0597c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不礙約存而恒奪。",
        "from": "T45n1872_001:0597c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不妨壞而常成。",
        "from": "T45n1872_001:0597c23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣具立眾生之名。",
        "from": "T45n1872_001:0597c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有眾生可得。",
        "from": "T45n1872_001:0597c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約體權施法身之號。",
        "from": "T45n1872_001:0597c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧有諸佛可求。",
        "from": "T45n1872_001:0597c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫不妄徹真源。",
        "from": "T45n1872_001:0597c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居一相而恒有。",
        "from": "T45n1872_001:0597c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真該妄末。",
        "from": "T45n1872_001:0597c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入五道而常空。",
        "from": "T45n1872_001:0597c25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情該則二界難通智說乃一如易說。",
        "from": "T45n1872_001:0597c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後雙非雙立互成。",
        "from": "T45n1872_001:0597c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見諸佛於眾生身。",
        "from": "T45n1872_001:0597c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀眾生於佛體。",
        "from": "T45n1872_001:0597c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七明隱顯七明隱顯問隱顯之義。",
        "from": "T45n1872_001:0598a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旨趣難原。",
        "from": "T45n1872_001:0598a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依空色以通玄。",
        "from": "T45n1872_001:0598a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "約一多而顯密。",
        "from": "T45n1872_001:0598a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若顯時有隱。",
        "from": "T45n1872_001:0598a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀色即合見空。",
        "from": "T45n1872_001:0598a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若隱時有顯。",
        "from": "T45n1872_001:0598a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見寂應常覩動。",
        "from": "T45n1872_001:0598a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請開法藏。",
        "from": "T45n1872_001:0598a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此智珠　私對。",
        "from": "T45n1872_001:0598a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此能攝即此云彼。",
        "from": "T45n1872_001:0598a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若收此。",
        "from": "T45n1872_001:0598a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦此顯彼隱。",
        "from": "T45n1872_001:0598a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱在即是顯在。",
        "from": "T45n1872_001:0598a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯時正是隱時。",
        "from": "T45n1872_001:0598a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一壞全攝。",
        "from": "T45n1872_001:0598a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多成此顯。",
        "from": "T45n1872_001:0598a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全收彼隱。",
        "from": "T45n1872_001:0598a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法體而恒明。",
        "from": "T45n1872_001:0598a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明亦非顯。",
        "from": "T45n1872_001:0598a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛動而常寂。",
        "from": "T45n1872_001:0598a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂亦非隱。",
        "from": "T45n1872_001:0598a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱由顯立。",
        "from": "T45n1872_001:0598a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界開乎緣起中。",
        "from": "T45n1872_001:0598a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯由隱成。",
        "from": "T45n1872_001:0598a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬物鏡於一空之上。",
        "from": "T45n1872_001:0598a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然見空即是見色。",
        "from": "T45n1872_001:0598a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了妄即是了真。",
        "from": "T45n1872_001:0598a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詎歷八萬。",
        "from": "T45n1872_001:0598a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體心之首。",
        "from": "T45n1872_001:0598a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹對。",
        "from": "T45n1872_001:0598a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八明因果八明因果問因果相依。",
        "from": "T45n1872_001:0598a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其猶函蓋。",
        "from": "T45n1872_001:0598a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若從因獲果。",
        "from": "T45n1872_001:0598a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即果成異於因時。",
        "from": "T45n1872_001:0598a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若即因是果。",
        "from": "T45n1872_001:0598a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生同於佛地。",
        "from": "T45n1872_001:0598a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得稱為斷德。",
        "from": "T45n1872_001:0598a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "茲又落常。",
        "from": "T45n1872_001:0598a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸旨迷方開斯正路　私對曰。",
        "from": "T45n1872_001:0598a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果二位。",
        "from": "T45n1872_001:0598a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一緣起。",
        "from": "T45n1872_001:0598a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相因成立。",
        "from": "T45n1872_001:0598a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義不孤興。",
        "from": "T45n1872_001:0598a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因徹果源。",
        "from": "T45n1872_001:0598a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果究因末。",
        "from": "T45n1872_001:0598a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢行願。",
        "from": "T45n1872_001:0598a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方號圓因。",
        "from": "T45n1872_001:0598a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍那十身。",
        "from": "T45n1872_001:0598a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂稱滿果。",
        "from": "T45n1872_001:0598a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則法無前後。",
        "from": "T45n1872_001:0598a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨了處而因圓。",
        "from": "T45n1872_001:0598a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛雖斷常。",
        "from": "T45n1872_001:0598a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂悟時而理現。",
        "from": "T45n1872_001:0598a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果果非是得。",
        "from": "T45n1872_001:0598a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因亦不亡。",
        "from": "T45n1872_001:0598a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶是發心方驗。",
        "from": "T45n1872_001:0598a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果究因際。",
        "from": "T45n1872_001:0598a20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩已成正覺。",
        "from": "T45n1872_001:0598a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知因源果位相望。",
        "from": "T45n1872_001:0598a20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自招斷常之失。",
        "from": "T45n1872_001:0598a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同體一解。",
        "from": "T45n1872_001:0598a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復招體用之識。",
        "from": "T45n1872_001:0598a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自可緣起門中。",
        "from": "T45n1872_001:0598a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "許因相即。",
        "from": "T45n1872_001:0598a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界證處果異預談。",
        "from": "T45n1872_001:0598a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九達色空九達色空問緣起事。",
        "from": "T45n1872_001:0598a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分齊差別。",
        "from": "T45n1872_001:0598a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界空理。",
        "from": "T45n1872_001:0598a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離於限量。",
        "from": "T45n1872_001:0598a24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一通一礙自在之義有乖。",
        "from": "T45n1872_001:0598a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或隱或顯。",
        "from": "T45n1872_001:0598a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "融會之端莫準。",
        "from": "T45n1872_001:0598a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲使力齊一味義顯同源。",
        "from": "T45n1872_001:0598a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "希聽德音。",
        "from": "T45n1872_001:0598a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願開高唱　私對。",
        "from": "T45n1872_001:0598a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色攬空成。",
        "from": "T45n1872_001:0598a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如動波之收水。",
        "from": "T45n1872_001:0598a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事含理就。",
        "from": "T45n1872_001:0598a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "似金器此隨形。",
        "from": "T45n1872_001:0598a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色依空立。",
        "from": "T45n1872_001:0598a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空約色明。",
        "from": "T45n1872_001:0598a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互奪則二義必亡。",
        "from": "T45n1872_001:0598a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互成則兩門俱現。",
        "from": "T45n1872_001:0598a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現時即隱。",
        "from": "T45n1872_001:0598b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故觀色而常空。",
        "from": "T45n1872_001:0598b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空時即顯。",
        "from": "T45n1872_001:0598b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故觀空而恒色。",
        "from": "T45n1872_001:0598b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色既非色。",
        "from": "T45n1872_001:0598b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空亦非空。",
        "from": "T45n1872_001:0598b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互有力而互無。",
        "from": "T45n1872_001:0598b02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相成而互奪。",
        "from": "T45n1872_001:0598b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故無生之義遂彰。",
        "from": "T45n1872_001:0598b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由相成。",
        "from": "T45n1872_001:0598b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故緣起之門乃現。",
        "from": "T45n1872_001:0598b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色無自性。",
        "from": "T45n1872_001:0598b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉體全空。",
        "from": "T45n1872_001:0598b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空無自體。",
        "from": "T45n1872_001:0598b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉空全色。",
        "from": "T45n1872_001:0598b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色空無二。",
        "from": "T45n1872_001:0598b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓通一際。",
        "from": "T45n1872_001:0598b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更使一通一礙。",
        "from": "T45n1872_001:0598b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溥在相而未融。",
        "from": "T45n1872_001:0598b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有隱解在性而方中。",
        "from": "T45n1872_001:0598b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹對。",
        "from": "T45n1872_001:0598b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴策林終維時明治二十四年卯五月。",
        "from": "T45n1872_001:0598b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南山留學之際。",
        "from": "T45n1872_001:0598b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撿出此書於釋迦文院寶庫。",
        "from": "T45n1872_001:0598b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶接悲母四大不順之急報。",
        "from": "T45n1872_001:0598b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲直下山看病。",
        "from": "T45n1872_001:0598b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃祈平癒于三寶奉速寫畢。",
        "from": "T45n1872_001:0598b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　南都唐招提寺末資",
        "from": "T45n1872_001:0598b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　五月十七日　　　求律沙門智海五夏",
        "from": "T45n1872_001:0598b15_0",
        "context_with_next_sentence": true
    }
]