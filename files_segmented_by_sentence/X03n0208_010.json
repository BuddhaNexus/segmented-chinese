{
    "X03n0208_010:0001a06_0": "華嚴經論(卷第十)",
    "X03n0208_010:0001a08_0": "後魏釋　靈辨　造",
    "X03n0208_010:0001a09_0": "如來光明覺品第五",
    "X03n0208_010:0001a10_0": "光明開覺者。",
    "X03n0208_010:0001a10_1": "上道場會聖者普賢。",
    "X03n0208_010:0001a10_2": "以佛智明力用。",
    "X03n0208_010:0001a11_0": "示如來樹王所證法身。",
    "X03n0208_010:0001a11_1": "依果清淨。",
    "X03n0208_010:0001a11_2": "具足自在無礙。",
    "X03n0208_010:0001a12_0": "為應化根本。",
    "X03n0208_010:0001a12_1": "猶如大海出百川流。",
    "X03n0208_010:0001a12_2": "隨眾生噐水。",
    "X03n0208_010:0001a12_3": "示月輪身。",
    "X03n0208_010:0001a13_4": "無不對見。",
    "X03n0208_010:0001a13_5": "聖者文殊菩薩。",
    "X03n0208_010:0001a13_6": "復開示名號四諦法門權道。",
    "X03n0208_010:0001a14_7": "隨一切世間眾生根生。",
    "X03n0208_010:0001a14_8": "應無量身雲。",
    "X03n0208_010:0001a15_0": "悉分別說。",
    "X03n0208_010:0001a15_1": "顯示四種權道。",
    "X03n0208_010:0001a15_2": "充滿法界。",
    "X03n0208_010:0001a15_3": "一者身權。",
    "X03n0208_010:0001a15_4": "隨群生噐水。",
    "X03n0208_010:0001a16_5": "示根淨方便無量身雲。",
    "X03n0208_010:0001a16_6": "一切悉現故。",
    "X03n0208_010:0001a16_7": "二者依果權。",
    "X03n0208_010:0001a17_8": "隨諸業集垢淨剎土。",
    "X03n0208_010:0001a17_9": "無礙興起。",
    "X03n0208_010:0001a17_10": "充滿世間故。",
    "X03n0208_010:0001a18_11": "三者名號權。",
    "X03n0208_010:0001a18_12": "隨群生噐。",
    "X03n0208_010:0001a18_13": "應無量德號。",
    "X03n0208_010:0001a18_14": "稱其悕望。",
    "X03n0208_010:0001a19_15": "皆利安故。",
    "X03n0208_010:0001a19_16": "四者法門權。",
    "X03n0208_010:0001a19_17": "隨其欲性。",
    "X03n0208_010:0001a19_18": "雨甘露法雨。",
    "X03n0208_010:0001a20_0": "應彼根噐。",
    "X03n0208_010:0001a20_1": "盈滿其中。",
    "X03n0208_010:0001a20_2": "如龍王雨。",
    "X03n0208_010:0001a20_3": "無不澤潤故。",
    "X03n0208_010:0001a20_4": "雖乘佛力。",
    "X03n0208_010:0001a21_5": "如是開現。",
    "X03n0208_010:0001a21_6": "一切大眾。",
    "X03n0208_010:0001a21_7": "未覩其實。",
    "X03n0208_010:0001a21_8": "謂如來依本分月輪身所示權道。",
    "X03n0208_010:0001a22_9": "何能充滿一切世界。",
    "X03n0208_010:0001a22_10": "是故婆伽婆。",
    "X03n0208_010:0001a23_11": "令一切大眾。",
    "X03n0208_010:0001a23_12": "於常果法身。",
    "X03n0208_010:0001a23_13": "起深信解故。",
    "X03n0208_010:0001a23_14": "依月輪星流身放大光明。",
    "X03n0208_010:0001a24_15": "漸次普照一切世界。",
    "X03n0208_010:0001a24_16": "令諸大眾。",
    "X03n0208_010:0001b01_17": "尋光開覺。",
    "X03n0208_010:0001b01_18": "覩見如來四種道。",
    "X03n0208_010:0001b01_19": "充滿十方。",
    "X03n0208_010:0001b01_20": "入佛智海。",
    "X03n0208_010:0001b02_21": "趣無餘涅槃故。",
    "X03n0208_010:0001b02_22": "是故顯示光明開覺。",
    "X03n0208_010:0001b02_23": "常果法身。",
    "X03n0208_010:0001b03_0": "不思議無礙。",
    "X03n0208_010:0001b03_1": "攝受一切世間。",
    "X03n0208_010:0001b03_2": "是光明開覺。",
    "X03n0208_010:0001b03_3": "法身智力有十種。",
    "X03n0208_010:0001b04_4": "一者法身常住。",
    "X03n0208_010:0001b04_5": "二者救苦說法。",
    "X03n0208_010:0001b04_6": "三者普應世間。",
    "X03n0208_010:0001b05_7": "四者法身如實。",
    "X03n0208_010:0001b05_8": "五者隨噐出現。",
    "X03n0208_010:0001b05_9": "六者智身寂滅。",
    "X03n0208_010:0001b06_10": "七者常恒清淨。",
    "X03n0208_010:0001b06_11": "八者智照自在。",
    "X03n0208_010:0001b06_12": "九者大悲拔苦。",
    "X03n0208_010:0001b07_13": "十者普應無礙。",
    "X03n0208_010:0001b07_14": "法身常住者。",
    "X03n0208_010:0001b07_15": "是顯示身有二分。",
    "X03n0208_010:0001b08_0": "一者光明開覺。",
    "X03n0208_010:0001b08_1": "二者顯嘆法身。",
    "X03n0208_010:0001b08_2": "光明開覺者。",
    "X03n0208_010:0001b08_3": "是光明開示。",
    "X03n0208_010:0001b09_4": "有三種。",
    "X03n0208_010:0001b09_5": "一者光照此剎。",
    "X03n0208_010:0001b09_6": "二者因光見佛。",
    "X03n0208_010:0001b09_7": "三者新眾生來集。",
    "X03n0208_010:0001b10_8": "光照此剎者。",
    "X03n0208_010:0001b11_0": "經說爾者世尊(至)一切悉現。",
    "X03n0208_010:0001b12_0": "三千大千者。",
    "X03n0208_010:0001b12_1": "以千為始。",
    "X03n0208_010:0001b12_2": "從千數至千。",
    "X03n0208_010:0001b12_3": "名為小千。",
    "X03n0208_010:0001b12_4": "復以小千為始。",
    "X03n0208_010:0001b13_5": "從千數至千。",
    "X03n0208_010:0001b13_6": "名為中千。",
    "X03n0208_010:0001b13_7": "復以中千為始。",
    "X03n0208_010:0001b14_8": "從千數至千。",
    "X03n0208_010:0001b14_9": "名為大千。",
    "X03n0208_010:0001b14_10": "其中含有百億須彌。",
    "X03n0208_010:0001b14_11": "百億日月。",
    "X03n0208_010:0001b15_12": "四百億四天下。",
    "X03n0208_010:0001b15_13": "四百億四大海。",
    "X03n0208_010:0001b15_14": "三百億三界。",
    "X03n0208_010:0001b16_15": "如來放光。",
    "X03n0208_010:0001b16_16": "悉照其中。",
    "X03n0208_010:0001b16_17": "普現四種不思議權道。",
    "X03n0208_010:0001b16_18": "問曰。",
    "X03n0208_010:0001b17_19": "上放光從面門眉間。",
    "X03n0208_010:0001b17_20": "及齒間出。",
    "X03n0208_010:0001b17_21": "是中何故從足指相輪中放。",
    "X03n0208_010:0001b18_22": "答曰。",
    "X03n0208_010:0001b18_23": "上放光明。",
    "X03n0208_010:0001b18_24": "顯示演說甚深法。",
    "X03n0208_010:0001b18_25": "故從面門眉間放。",
    "X03n0208_010:0001b19_26": "是中開示普應世間。",
    "X03n0208_010:0001b19_27": "以四種權道。",
    "X03n0208_010:0001b20_0": "下攝群生。",
    "X03n0208_010:0001b20_1": "是故從於兩足相輪放光。",
    "X03n0208_010:0001b20_2": "問曰。",
    "X03n0208_010:0001b20_3": "何故放光但應百億。",
    "X03n0208_010:0001b21_4": "而不說普照一切世界。",
    "X03n0208_010:0001b21_5": "答曰。",
    "X03n0208_010:0001b21_6": "為化眾生。",
    "X03n0208_010:0001b22_7": "漸次遍照故。",
    "X03n0208_010:0001b22_8": "因光見佛者。",
    "X03n0208_010:0001b22_9": "於此世界。",
    "X03n0208_010:0001b22_10": "悉見如來坐獅子座。",
    "X03n0208_010:0001b23_11": "奮眾圍繞。",
    "X03n0208_010:0001b23_12": "轉淨梵輪。",
    "X03n0208_010:0001b23_13": "入勝法門故。",
    "X03n0208_010:0001b24_0": "經說如此見佛(至)亦復如是。",
    "X03n0208_010:0001c01_0": "新眾來集者。",
    "X03n0208_010:0001c01_1": "如來神力。",
    "X03n0208_010:0001c01_2": "十方各有一大菩薩。",
    "X03n0208_010:0001c01_3": "而來雲集。",
    "X03n0208_010:0001c02_4": "何故以神力集。",
    "X03n0208_010:0001c02_5": "令文殊菩薩。",
    "X03n0208_010:0001c02_6": "依光說偈。",
    "X03n0208_010:0001c02_7": "顯示法身常住清淨。",
    "X03n0208_010:0001c03_8": "隨眾生噐。",
    "X03n0208_010:0001c03_9": "應四種權道。",
    "X03n0208_010:0001c03_10": "充滿法界故。",
    "X03n0208_010:0001c04_0": "經說以佛神力故(至)淨修梵行。",
    "X03n0208_010:0001c05_0": "顯嘆法身。",
    "X03n0208_010:0001c05_1": "文殊菩薩。",
    "X03n0208_010:0001c05_2": "依常身智明顯嘆。",
    "X03n0208_010:0001c05_3": "有五種。",
    "X03n0208_010:0001c05_4": "一者有行平等觀。",
    "X03n0208_010:0001c06_5": "二者依正平等觀。",
    "X03n0208_010:0001c06_6": "三者陰平等觀。",
    "X03n0208_010:0001c07_0": "四者見平等觀。",
    "X03n0208_010:0001c07_1": "五者無我平等觀。",
    "X03n0208_010:0001c07_2": "有行平等觀者。",
    "X03n0208_010:0001c08_0": "依相行則有取受心生。",
    "X03n0208_010:0001c08_1": "於一切法。",
    "X03n0208_010:0001c08_2": "分別捨證。",
    "X03n0208_010:0001c08_3": "見生死可捨。",
    "X03n0208_010:0001c09_4": "見如來涅槃解脫可證。",
    "X03n0208_010:0001c09_5": "非性淨般若真如智。",
    "X03n0208_010:0001c10_6": "如是見者。",
    "X03n0208_010:0001c10_7": "非淨慧眼。",
    "X03n0208_010:0001c10_8": "以法性涅槃無捨證故。",
    "X03n0208_010:0001c11_0": "偈說若有知正覺(至)彼非淨道眼。",
    "X03n0208_010:0001c12_0": "依正平等觀者。",
    "X03n0208_010:0001c12_1": "法從緣起。",
    "X03n0208_010:0001c12_2": "猶如幻化。",
    "X03n0208_010:0001c12_3": "如實觀察。",
    "X03n0208_010:0001c12_4": "身與依果。",
    "X03n0208_010:0001c13_5": "自性無二。",
    "X03n0208_010:0001c13_6": "於一切法平等。",
    "X03n0208_010:0001c13_7": "同真際。",
    "X03n0208_010:0001c13_8": "如是見佛身者。",
    "X03n0208_010:0001c14_9": "是淨慧眼。",
    "X03n0208_010:0001c14_10": "如法性故。",
    "X03n0208_010:0001c15_0": "偈說若有知如來(至)彼人難思議。",
    "X03n0208_010:0001c16_0": "陰平等觀者。",
    "X03n0208_010:0001c16_1": "法性涅槃中。",
    "X03n0208_010:0001c16_2": "一切法平等。",
    "X03n0208_010:0001c16_3": "佛與眾生。",
    "X03n0208_010:0001c17_0": "入實相門。",
    "X03n0208_010:0001c17_1": "陰界相盡。",
    "X03n0208_010:0001c17_2": "猶如虗空。",
    "X03n0208_010:0001c17_3": "如經中說。",
    "X03n0208_010:0001c17_4": "觀身實相。",
    "X03n0208_010:0001c18_5": "觀佛亦然。",
    "X03n0208_010:0001c18_6": "寂滅無二故。",
    "X03n0208_010:0001c19_0": "偈說若見我及佛(至)彼是大牟尼。",
    "X03n0208_010:0001c20_0": "見平等觀者。",
    "X03n0208_010:0001c20_1": "智及境界。",
    "X03n0208_010:0001c20_2": "真如無二。",
    "X03n0208_010:0001c20_3": "自覺清淨故。",
    "X03n0208_010:0001c20_4": "能如是知如來身者。",
    "X03n0208_010:0001c21_5": "則見佛與世。",
    "X03n0208_010:0001c21_6": "而無所起。",
    "X03n0208_010:0001c21_7": "等虗空故。",
    "X03n0208_010:0001c22_0": "偈說見者無所有(至)彼人大名稱。",
    "X03n0208_010:0001c23_0": "無我平等觀者。",
    "X03n0208_010:0001c23_1": "陰集非有。",
    "X03n0208_010:0001c23_2": "無性故空。",
    "X03n0208_010:0001c23_3": "解法寂滅。",
    "X03n0208_010:0001c23_4": "入不二法門。",
    "X03n0208_010:0001c24_5": "則見如來智無有畏。",
    "X03n0208_010:0001c24_6": "安穩解脫故。",
    "X03n0208_010:0001c24_7": "何故顯示法身常住。",
    "X03n0208_010:0002a01_8": "如一切智入。",
    "X03n0208_010:0002a01_9": "令諸大眾。",
    "X03n0208_010:0002a01_10": "尋光覩見。",
    "X03n0208_010:0002a02_0": "四種種道。",
    "X03n0208_010:0002a02_1": "心無染著。",
    "X03n0208_010:0002a02_2": "離一切相故。",
    "X03n0208_010:0002a03_0": "偈說無我無眾生(至)智者無所畏。",
    "X03n0208_010:0002a04_0": "救苦說法者。",
    "X03n0208_010:0002a04_1": "光如前說。",
    "X03n0208_010:0002a04_2": "倍增差別。",
    "X03n0208_010:0002a04_3": "是開示法輪攝。",
    "X03n0208_010:0002a05_0": "有二種。",
    "X03n0208_010:0002a05_1": "一者智斷具故。",
    "X03n0208_010:0002a05_2": "能轉法輪。",
    "X03n0208_010:0002a05_3": "二者勸修。",
    "X03n0208_010:0002a05_4": "如聞見證。",
    "X03n0208_010:0002a06_5": "智斷具者。",
    "X03n0208_010:0002a06_6": "是相有六種。",
    "X03n0208_010:0002a06_7": "一者安護故。",
    "X03n0208_010:0002a06_8": "修行智斷。",
    "X03n0208_010:0002a07_9": "以無漏根力。",
    "X03n0208_010:0002a07_10": "調御群生。",
    "X03n0208_010:0002a07_11": "斷癡愛刺林。",
    "X03n0208_010:0002a07_12": "免熱惱苦。",
    "X03n0208_010:0002a08_0": "置清涼地。",
    "X03n0208_010:0002a08_1": "證道還應為轉法輪。",
    "X03n0208_010:0002a08_2": "法爾調御故。",
    "X03n0208_010:0002a08_3": "二者見見實故。",
    "X03n0208_010:0002a09_4": "修行智斷。",
    "X03n0208_010:0002a09_5": "證真如空。",
    "X03n0208_010:0002a09_6": "遠離二邊。",
    "X03n0208_010:0002a09_7": "同涅槃相。",
    "X03n0208_010:0002a10_8": "轉實法輪故。",
    "X03n0208_010:0002a10_9": "三者證涅槃故。",
    "X03n0208_010:0002a10_10": "修行智斷。",
    "X03n0208_010:0002a10_11": "於無量劫。",
    "X03n0208_010:0002a11_12": "集一切德。",
    "X03n0208_010:0002a11_13": "本度生死此岸。",
    "X03n0208_010:0002a11_14": "達到涅槃。",
    "X03n0208_010:0002a11_15": "法爾應轉清淨梵輪。",
    "X03n0208_010:0002a12_16": "普覺世間故。",
    "X03n0208_010:0002a12_17": "四者降魔故。",
    "X03n0208_010:0002a12_18": "修行智斷。",
    "X03n0208_010:0002a12_19": "以性淨無我無漏聖智。",
    "X03n0208_010:0002a13_20": "降伏四魔。",
    "X03n0208_010:0002a13_21": "無畏勇健。",
    "X03n0208_010:0002a13_22": "直出生死。",
    "X03n0208_010:0002a14_23": "以慈悲智幢。",
    "X03n0208_010:0002a14_24": "現轉法輪。",
    "X03n0208_010:0002a14_25": "無畏說故。",
    "X03n0208_010:0002a14_26": "五者度煩惱漏故。",
    "X03n0208_010:0002a15_27": "修行智斷。",
    "X03n0208_010:0002a15_28": "道種盡慧。",
    "X03n0208_010:0002a15_29": "滅有依依無依諸有漏集。",
    "X03n0208_010:0002a16_30": "逮得涅槃常身智海。",
    "X03n0208_010:0002a16_31": "一念盡見一切法界。",
    "X03n0208_010:0002a16_32": "自在示現。",
    "X03n0208_010:0002a17_33": "轉勝法輪。",
    "X03n0208_010:0002a17_34": "無障碍故。",
    "X03n0208_010:0002a17_35": "六者擊法皷故。",
    "X03n0208_010:0002a17_36": "修行智斷。",
    "X03n0208_010:0002a18_37": "具一切智已。",
    "X03n0208_010:0002a18_38": "興正法雲。",
    "X03n0208_010:0002a18_39": "甘露法雨。",
    "X03n0208_010:0002a18_40": "悉令眾生。",
    "X03n0208_010:0002a18_41": "入安穩智道。",
    "X03n0208_010:0002a19_42": "轉淨法輪。",
    "X03n0208_010:0002a19_43": "自覺法爾故。",
    "X03n0208_010:0002a20_0": "偈說見眾生苦逼(至)自覺法如是。",
    "X03n0208_010:0002a21_0": "勸修者。",
    "X03n0208_010:0002a21_1": "是勸進相。",
    "X03n0208_010:0002a21_2": "有四種。",
    "X03n0208_010:0002a21_3": "一者界處勸修法性涅槃。",
    "X03n0208_010:0002a22_4": "壞一切有自在雲。",
    "X03n0208_010:0002a22_5": "實應如佛所住。",
    "X03n0208_010:0002a22_6": "常身示現。",
    "X03n0208_010:0002a22_7": "遊諸剎土。",
    "X03n0208_010:0002a23_8": "利安世間故。",
    "X03n0208_010:0002a23_9": "二者果處勸修涅槃。",
    "X03n0208_010:0002a23_10": "如空常恒清淨。",
    "X03n0208_010:0002a24_11": "應以大願。",
    "X03n0208_010:0002a24_12": "歡喜念住故。",
    "X03n0208_010:0002a24_13": "三者悲處勸修。",
    "X03n0208_010:0002a24_14": "在大地獄。",
    "X03n0208_010:0002b01_15": "為惱燒煑。",
    "X03n0208_010:0002b01_16": "應住心如空。",
    "X03n0208_010:0002b01_17": "安穩濟難故。",
    "X03n0208_010:0002b01_18": "四者捨處勸修。",
    "X03n0208_010:0002b02_19": "護大法故。",
    "X03n0208_010:0002b02_20": "勿惜壽命。",
    "X03n0208_010:0002b02_21": "住堅固忍。",
    "X03n0208_010:0002b02_22": "建正法幢。",
    "X03n0208_010:0002b03_23": "是因能至金剛之身。",
    "X03n0208_010:0002b03_24": "不可壞故。",
    "X03n0208_010:0002b03_25": "何故顯示勸修。",
    "X03n0208_010:0002b04_0": "如聞證入解脫果故。",
    "X03n0208_010:0002b05_0": "偈說不壞無量境(至)彼得如來法。",
    "X03n0208_010:0002b06_0": "普應世間者。",
    "X03n0208_010:0002b06_1": "光如前說。",
    "X03n0208_010:0002b06_2": "倍增差別。",
    "X03n0208_010:0002b06_3": "是普應有二種。",
    "X03n0208_010:0002b07_0": "一者法身自在。",
    "X03n0208_010:0002b07_1": "二者應身普至。",
    "X03n0208_010:0002b07_2": "法身自在者。",
    "X03n0208_010:0002b07_3": "善覺清淨。",
    "X03n0208_010:0002b08_4": "住無餘涅槃故。",
    "X03n0208_010:0002b09_0": "偈說如來覺諸法(至)調伏群生類。",
    "X03n0208_010:0002b10_0": "應身普至者。",
    "X03n0208_010:0002b10_1": "是云。",
    "X03n0208_010:0002b10_2": "現有九種。",
    "X03n0208_010:0002b10_3": "一者出生方便。",
    "X03n0208_010:0002b10_4": "降身母胎。",
    "X03n0208_010:0002b11_5": "示行人道。",
    "X03n0208_010:0002b11_6": "雖復出生。",
    "X03n0208_010:0002b11_7": "相好具足。",
    "X03n0208_010:0002b11_8": "猶如山王。",
    "X03n0208_010:0002b11_9": "住[宋木+取]後身。",
    "X03n0208_010:0002b12_10": "示成正覺。",
    "X03n0208_010:0002b12_11": "普照世間。",
    "X03n0208_010:0002b12_12": "如滿月故。",
    "X03n0208_010:0002b12_13": "二者行攝方便。",
    "X03n0208_010:0002b13_14": "禪思經行。",
    "X03n0208_010:0002b13_15": "集無量功德。",
    "X03n0208_010:0002b13_16": "定慧清淨。",
    "X03n0208_010:0002b13_17": "心無所畏。",
    "X03n0208_010:0002b14_0": "如師子王故。",
    "X03n0208_010:0002b14_1": "三者觀察方便。",
    "X03n0208_010:0002b14_2": "淨眼觀察十方界藏。",
    "X03n0208_010:0002b15_0": "或示戲咲。",
    "X03n0208_010:0002b15_1": "調御眾生故。",
    "X03n0208_010:0002b15_2": "四者身淨方便。",
    "X03n0208_010:0002b15_3": "示末後身。",
    "X03n0208_010:0002b16_0": "大師子吼。",
    "X03n0208_010:0002b16_1": "所轉法輪。",
    "X03n0208_010:0002b16_2": "莫不真實。",
    "X03n0208_010:0002b16_3": "其身清淨。",
    "X03n0208_010:0002b16_4": "如日光故。",
    "X03n0208_010:0002b17_5": "五者棄家方便。",
    "X03n0208_010:0002b17_6": "捨家出家。",
    "X03n0208_010:0002b17_7": "解脫無染。",
    "X03n0208_010:0002b17_8": "修行禪寂。",
    "X03n0208_010:0002b18_0": "入如實際。",
    "X03n0208_010:0002b18_1": "心常志樂。",
    "X03n0208_010:0002b18_2": "住諸佛行。",
    "X03n0208_010:0002b18_3": "取解脫果故。",
    "X03n0208_010:0002b18_4": "六者亦坐道場方便。",
    "X03n0208_010:0002b19_5": "先已善覺一切法相。",
    "X03n0208_010:0002b19_6": "而現坐道場。",
    "X03n0208_010:0002b20_0": "修無漏智道。",
    "X03n0208_010:0002b20_1": "度諸法彼岸。",
    "X03n0208_010:0002b20_2": "以金剛智火。",
    "X03n0208_010:0002b20_3": "滅無明闇。",
    "X03n0208_010:0002b21_0": "正覺諸法。",
    "X03n0208_010:0002b21_1": "成無上道故。",
    "X03n0208_010:0002b21_2": "七者調伏方便。",
    "X03n0208_010:0002b21_3": "以大悲雲。",
    "X03n0208_010:0002b22_0": "遍覆一切。",
    "X03n0208_010:0002b22_1": "慈光流入諸群生根。",
    "X03n0208_010:0002b22_2": "示以法寶。",
    "X03n0208_010:0002b22_3": "悉調伏故。",
    "X03n0208_010:0002b23_4": "八者轉法輪方便。",
    "X03n0208_010:0002b23_5": "容儀殊特。",
    "X03n0208_010:0002b23_6": "處一切大眾。",
    "X03n0208_010:0002b23_7": "示無畏說。",
    "X03n0208_010:0002b24_8": "神力自在。",
    "X03n0208_010:0002b24_9": "無能映蔽。",
    "X03n0208_010:0002b24_10": "悉攝眾生。",
    "X03n0208_010:0002b24_11": "置如實法故。",
    "X03n0208_010:0002c01_0": "九者滅度非滅度方便。",
    "X03n0208_010:0002c01_1": "噐咸盡故。",
    "X03n0208_010:0002c01_2": "示般涅槃。",
    "X03n0208_010:0002c01_3": "普現佛事。",
    "X03n0208_010:0002c02_4": "如實饒益。",
    "X03n0208_010:0002c02_5": "或復熾然明照世間。",
    "X03n0208_010:0002c02_6": "如千日出。",
    "X03n0208_010:0002c02_7": "普照一切。",
    "X03n0208_010:0002c03_8": "隨根充滿。",
    "X03n0208_010:0002c03_9": "皆令達到究竟菩提故。",
    "X03n0208_010:0002c04_0": "偈說或見初生時(至)顯現自在法。",
    "X03n0208_010:0002c05_0": "法身如實者。",
    "X03n0208_010:0002c05_1": "光如前說。",
    "X03n0208_010:0002c05_2": "倍增差別。",
    "X03n0208_010:0002c05_3": "是法身如實。",
    "X03n0208_010:0002c05_4": "有十種甚深。",
    "X03n0208_010:0002c06_5": "一者無相甚深。",
    "X03n0208_010:0002c06_6": "法身非有。",
    "X03n0208_010:0002c06_7": "隨群生噐。",
    "X03n0208_010:0002c06_8": "次第現身。",
    "X03n0208_010:0002c07_9": "猶如月王。",
    "X03n0208_010:0002c07_10": "漸增滿足故。",
    "X03n0208_010:0002c07_11": "二者清淨甚深。",
    "X03n0208_010:0002c07_12": "證如智破二種縛。",
    "X03n0208_010:0002c08_13": "一者心緣縛。",
    "X03n0208_010:0002c08_14": "解我無我心相盡故。",
    "X03n0208_010:0002c09_0": "二者界處縛。",
    "X03n0208_010:0002c09_1": "我所法中。",
    "X03n0208_010:0002c09_2": "無所取故。",
    "X03n0208_010:0002c09_3": "離此縛故。",
    "X03n0208_010:0002c09_4": "得二種淨。",
    "X03n0208_010:0002c10_5": "一者智淨。",
    "X03n0208_010:0002c10_6": "涅槃智覺。",
    "X03n0208_010:0002c10_7": "如靈空故。",
    "X03n0208_010:0002c10_8": "二者斷淨。",
    "X03n0208_010:0002c10_9": "於煩惱爾炎地種滅故。",
    "X03n0208_010:0002c11_10": "是淨非念處智。",
    "X03n0208_010:0002c11_11": "常身離盡無邊聖諦故。",
    "X03n0208_010:0002c12_12": "三者解脫甚深。",
    "X03n0208_010:0002c12_13": "自覺聖道。",
    "X03n0208_010:0002c12_14": "離無明闇。",
    "X03n0208_010:0002c12_15": "如日天子。",
    "X03n0208_010:0002c13_16": "普照世間。",
    "X03n0208_010:0002c13_17": "如聲發響應。",
    "X03n0208_010:0002c13_18": "悉對現故。",
    "X03n0208_010:0002c13_19": "四者常身甚深。",
    "X03n0208_010:0002c14_20": "離陰入界。",
    "X03n0208_010:0002c14_21": "入壞無常壞果。",
    "X03n0208_010:0002c14_22": "超出世間。",
    "X03n0208_010:0002c14_23": "住自覺聖地。",
    "X03n0208_010:0002c15_24": "自在無畏。",
    "X03n0208_010:0002c15_25": "如師子王故。",
    "X03n0208_010:0002c15_26": "五者自體淨甚深。",
    "X03n0208_010:0002c16_0": "離一切障。",
    "X03n0208_010:0002c16_1": "自覺解脫。",
    "X03n0208_010:0002c16_2": "如靈空集故。",
    "X03n0208_010:0002c16_3": "六者斷常甚深。",
    "X03n0208_010:0002c17_0": "於有依集起。",
    "X03n0208_010:0002c17_1": "無依集起二種建立。",
    "X03n0208_010:0002c17_2": "住地煩惱。",
    "X03n0208_010:0002c17_3": "菩提智斷故。",
    "X03n0208_010:0002c18_4": "七者同體淨甚深。",
    "X03n0208_010:0002c18_5": "自覺清淨離染障。",
    "X03n0208_010:0002c18_6": "自在無礙。",
    "X03n0208_010:0002c19_7": "悉寂滅故。",
    "X03n0208_010:0002c19_8": "八者爾炎淨甚深。",
    "X03n0208_010:0002c19_9": "智光普入眾生界藏悉建立。",
    "X03n0208_010:0002c20_10": "九者嚴淨甚深。",
    "X03n0208_010:0002c20_11": "集一切依果。",
    "X03n0208_010:0002c20_12": "以無量莊嚴具。",
    "X03n0208_010:0002c21_13": "悉莊嚴故。",
    "X03n0208_010:0002c21_14": "十者空實甚深。",
    "X03n0208_010:0002c21_15": "正覺寂滅。",
    "X03n0208_010:0002c21_16": "有亦有。",
    "X03n0208_010:0002c22_17": "有非有相。",
    "X03n0208_010:0002c22_18": "非無亦無。",
    "X03n0208_010:0002c22_19": "無非無相。",
    "X03n0208_010:0002c22_20": "而能普現說法調御故。",
    "X03n0208_010:0002c24_0": "偈說善逝法甚深(至)為說清淨法。",
    "X03n0208_010:0003a01_0": "隨噐出現者。",
    "X03n0208_010:0003a01_1": "光如前說。",
    "X03n0208_010:0003a01_2": "倍增差別。",
    "X03n0208_010:0003a01_3": "是依噐出現。",
    "X03n0208_010:0003a01_4": "有十種淨妙業。",
    "X03n0208_010:0003a02_5": "一者慈救淨業。",
    "X03n0208_010:0003a02_6": "於三品人中。",
    "X03n0208_010:0003a02_7": "等心免濟。",
    "X03n0208_010:0003a03_8": "於苦眾生。",
    "X03n0208_010:0003a03_9": "救苦與樂。",
    "X03n0208_010:0003a03_10": "離人天放逸。",
    "X03n0208_010:0003a03_11": "住慈等善根故。",
    "X03n0208_010:0003a04_12": "二者信淨業。",
    "X03n0208_010:0003a04_13": "修念佛三昧。",
    "X03n0208_010:0003a04_14": "堅住不動。",
    "X03n0208_010:0003a04_15": "猶如明鏡淨無垢故。",
    "X03n0208_010:0003a05_16": "三者無漏淨業。",
    "X03n0208_010:0003a05_17": "住性淨法流。",
    "X03n0208_010:0003a05_18": "慧明無穢故。",
    "X03n0208_010:0003a06_19": "無明闇障。",
    "X03n0208_010:0003a06_20": "越生死海故。",
    "X03n0208_010:0003a06_21": "四者身淨業。",
    "X03n0208_010:0003a06_22": "於四威儀。",
    "X03n0208_010:0003a07_0": "不令毀壞。",
    "X03n0208_010:0003a07_1": "心常繫念三昧法中。",
    "X03n0208_010:0003a07_2": "晝夜善觀諸佛境界。",
    "X03n0208_010:0003a08_3": "心不休息。",
    "X03n0208_010:0003a08_4": "趣菩提明處故。",
    "X03n0208_010:0003a08_5": "五者遍修淨業。",
    "X03n0208_010:0003a08_6": "心無怠慢。",
    "X03n0208_010:0003a09_7": "入一切三世。",
    "X03n0208_010:0003a09_8": "勇猛精進。",
    "X03n0208_010:0003a09_9": "攝無餘涅槃故。",
    "X03n0208_010:0003a09_10": "六者真智淨業。",
    "X03n0208_010:0003a10_11": "觀一切法。",
    "X03n0208_010:0003a10_12": "入性淨無我。",
    "X03n0208_010:0003a10_13": "真如法中。",
    "X03n0208_010:0003a10_14": "離我我所。",
    "X03n0208_010:0003a11_15": "無身相故。",
    "X03n0208_010:0003a11_16": "七者觀察淨業。",
    "X03n0208_010:0003a11_17": "善能計量諸眾。",
    "X03n0208_010:0003a11_18": "悉知其小大。",
    "X03n0208_010:0003a12_19": "應彼根噐。",
    "X03n0208_010:0003a12_20": "令離愛染。",
    "X03n0208_010:0003a12_21": "安置如實寂滅法故。",
    "X03n0208_010:0003a13_22": "八者神業淨業。",
    "X03n0208_010:0003a13_23": "於一切佛土。",
    "X03n0208_010:0003a13_24": "示神變力。",
    "X03n0208_010:0003a13_25": "悉令無量群生。",
    "X03n0208_010:0003a14_26": "飲法甘露。",
    "X03n0208_010:0003a14_27": "充滿身心。",
    "X03n0208_010:0003a14_28": "悉安穩故。",
    "X03n0208_010:0003a14_29": "九者計量淨業。",
    "X03n0208_010:0003a15_30": "知一切佛國色集。",
    "X03n0208_010:0003a15_31": "以無礙智明。",
    "X03n0208_010:0003a15_32": "照盡無餘故。",
    "X03n0208_010:0003a16_0": "十者微細計量智明淨業。",
    "X03n0208_010:0003a16_1": "於一切塵。",
    "X03n0208_010:0003a16_2": "悉知其數。",
    "X03n0208_010:0003a16_3": "智明無礙。",
    "X03n0208_010:0003a17_4": "自在教化故。",
    "X03n0208_010:0003a17_5": "何故顯嘆淨業。",
    "X03n0208_010:0003a17_6": "依彼噐水。",
    "X03n0208_010:0003a17_7": "現月王身故。",
    "X03n0208_010:0003a19_0": "偈說離諸人天樂(至)是彼淨妙業。",
    "X03n0208_010:0003a20_0": "智身寂滅者。",
    "X03n0208_010:0003a20_1": "光如前說。",
    "X03n0208_010:0003a20_2": "倍增差別。",
    "X03n0208_010:0003a20_3": "是智身寂滅有二種。",
    "X03n0208_010:0003a21_4": "一者法身離相。",
    "X03n0208_010:0003a21_5": "二者應身出化。",
    "X03n0208_010:0003a21_6": "法身離相者。",
    "X03n0208_010:0003a22_0": "是寂滅難見。",
    "X03n0208_010:0003a22_1": "有六種。",
    "X03n0208_010:0003a22_2": "一者倒見非真。",
    "X03n0208_010:0003a22_3": "二者色身無邊。",
    "X03n0208_010:0003a23_4": "三者法身離相。",
    "X03n0208_010:0003a23_5": "四者涅槃寂滅。",
    "X03n0208_010:0003a23_6": "五者離盡智淨。",
    "X03n0208_010:0003a24_0": "六者體淨解脫。",
    "X03n0208_010:0003a24_1": "倒見非真者。",
    "X03n0208_010:0003a24_2": "作色相緣。",
    "X03n0208_010:0003a24_3": "佛非淨涅槃。",
    "X03n0208_010:0003b01_4": "欲見佛者。",
    "X03n0208_010:0003b01_5": "是人隨顛倒行。",
    "X03n0208_010:0003b01_6": "蔽於慧眼。",
    "X03n0208_010:0003b01_7": "不能善達最勝涅槃。",
    "X03n0208_010:0003b02_8": "邪見取相故。",
    "X03n0208_010:0003b03_0": "偈說若以色性大神力(至)彼為不識最勝法。",
    "X03n0208_010:0003b04_0": "色身無邊者。",
    "X03n0208_010:0003b04_1": "無色離色。",
    "X03n0208_010:0003b04_2": "示一切色相。",
    "X03n0208_010:0003b04_3": "猶如虗空。",
    "X03n0208_010:0003b04_4": "無有能觀。",
    "X03n0208_010:0003b05_5": "見邊際故。",
    "X03n0208_010:0003b06_0": "偈說如來色身形相處(至)妙色威神不可極。",
    "X03n0208_010:0003b07_0": "法身離相者。",
    "X03n0208_010:0003b07_1": "體淨涅槃如實際。",
    "X03n0208_010:0003b07_2": "離一切色。",
    "X03n0208_010:0003b07_3": "非相所攝。",
    "X03n0208_010:0003b08_4": "而具妙色隨應故。",
    "X03n0208_010:0003b09_0": "偈說非以相好為如來(至)隨其所應悉能現。",
    "X03n0208_010:0003b10_0": "涅槃寂滅者。",
    "X03n0208_010:0003b10_1": "法性行果如如際。",
    "X03n0208_010:0003b10_2": "住無有量離諸量。",
    "X03n0208_010:0003b11_0": "離集無集。",
    "X03n0208_010:0003b11_1": "過諸合散。",
    "X03n0208_010:0003b11_2": "性相常恒。",
    "X03n0208_010:0003b11_3": "不可說故。",
    "X03n0208_010:0003b12_0": "偈說諸佛正法不可量(至)其性本來常寂滅。",
    "X03n0208_010:0003b13_0": "離盡智淨者。",
    "X03n0208_010:0003b13_1": "法身智淨。",
    "X03n0208_010:0003b13_2": "離陰界入。",
    "X03n0208_010:0003b13_3": "捨無常壞果。",
    "X03n0208_010:0003b13_4": "證報淨涅槃。",
    "X03n0208_010:0003b14_5": "心行處滅。",
    "X03n0208_010:0003b14_6": "過語言道故。",
    "X03n0208_010:0003b15_0": "偈說不以陰數為如來(至)言語道斷行處滅。",
    "X03n0208_010:0003b16_0": "體淨解脫者。",
    "X03n0208_010:0003b16_1": "身心離相。",
    "X03n0208_010:0003b16_2": "善覺如實。",
    "X03n0208_010:0003b16_3": "不二不盡。",
    "X03n0208_010:0003b16_4": "常清淨故。",
    "X03n0208_010:0003b18_0": "偈說等觀身心無異相(至)善逝深遠無所有。",
    "X03n0208_010:0003b19_0": "應身出化者。",
    "X03n0208_010:0003b19_1": "是示現有五種。",
    "X03n0208_010:0003b19_2": "一者流光遍入。",
    "X03n0208_010:0003b19_3": "隨一切法界。",
    "X03n0208_010:0003b20_4": "悉能遠照。",
    "X03n0208_010:0003b20_5": "光覺自在。",
    "X03n0208_010:0003b20_6": "善應群生故。",
    "X03n0208_010:0003b20_7": "二者同躰示現。",
    "X03n0208_010:0003b21_8": "一應示無量。",
    "X03n0208_010:0003b21_9": "無量示一。",
    "X03n0208_010:0003b21_10": "應一處一切處。",
    "X03n0208_010:0003b21_11": "一切處一處。",
    "X03n0208_010:0003b22_12": "無障[得彳]故。",
    "X03n0208_010:0003b22_13": "三者不動示現。",
    "X03n0208_010:0003b22_14": "身無去來。",
    "X03n0208_010:0003b22_15": "過妄想際。",
    "X03n0208_010:0003b23_16": "而能示現。",
    "X03n0208_010:0003b23_17": "起如幻智。",
    "X03n0208_010:0003b23_18": "應種種身雲故。",
    "X03n0208_010:0003b23_19": "四者隨世間起。",
    "X03n0208_010:0003b24_20": "應妄想生。",
    "X03n0208_010:0003b24_21": "了達自性。",
    "X03n0208_010:0003b24_22": "知無所有。",
    "X03n0208_010:0003b24_23": "悉寂滅故。",
    "X03n0208_010:0003c01_0": "五者究竟示現。",
    "X03n0208_010:0003c01_1": "如涅槃智者。",
    "X03n0208_010:0003c01_2": "則覩導師。",
    "X03n0208_010:0003c01_3": "遠離諸漏故。",
    "X03n0208_010:0003c02_0": "偈說普放妙光明(至)是則見導師。",
    "X03n0208_010:0003c03_0": "常住清淨者。",
    "X03n0208_010:0003c03_1": "光如前說。",
    "X03n0208_010:0003c03_2": "倍增差別。",
    "X03n0208_010:0003c03_3": "是相有二種。",
    "X03n0208_010:0003c03_4": "一者法身常住。",
    "X03n0208_010:0003c04_5": "二者勸諸菩薩。",
    "X03n0208_010:0003c04_6": "應如實知。",
    "X03n0208_010:0003c04_7": "法身常住者。",
    "X03n0208_010:0003c05_8": "是淨有六種。",
    "X03n0208_010:0003c05_9": "一者自覺超勝法身常住。",
    "X03n0208_010:0003c05_10": "超度四魔。",
    "X03n0208_010:0003c06_11": "自躰無依。",
    "X03n0208_010:0003c06_12": "無能勝者。",
    "X03n0208_010:0003c06_13": "壞無常壞果。",
    "X03n0208_010:0003c06_14": "如金剛故。",
    "X03n0208_010:0003c06_15": "二者能安護世間法身常住。",
    "X03n0208_010:0003c07_16": "自度四魔。",
    "X03n0208_010:0003c07_17": "能與世間。",
    "X03n0208_010:0003c07_18": "為歸依者。",
    "X03n0208_010:0003c08_19": "具一切功德。",
    "X03n0208_010:0003c08_20": "調御群生。",
    "X03n0208_010:0003c08_21": "證涅槃故。",
    "X03n0208_010:0003c08_22": "三者妄想識滅法身常住。",
    "X03n0208_010:0003c09_23": "壞七心壞果。",
    "X03n0208_010:0003c09_24": "覺淨涅槃。",
    "X03n0208_010:0003c09_25": "常恒不變。",
    "X03n0208_010:0003c10_26": "無所依止。",
    "X03n0208_010:0003c10_27": "如虗空故。",
    "X03n0208_010:0003c10_28": "四者壞果不壞法身常住。",
    "X03n0208_010:0003c11_0": "七識滅。",
    "X03n0208_010:0003c11_1": "真心躰淨。",
    "X03n0208_010:0003c11_2": "不為壞法之所壞故。",
    "X03n0208_010:0003c11_3": "五者斷淨法身常住。",
    "X03n0208_010:0003c12_4": "躰自躰虗偽盡。",
    "X03n0208_010:0003c12_5": "如鏡無垢故。",
    "X03n0208_010:0003c12_6": "六者智淨法身常住。",
    "X03n0208_010:0003c13_7": "不思議流住滅。",
    "X03n0208_010:0003c13_8": "真如躰照不二。",
    "X03n0208_010:0003c13_9": "善覺法性故。",
    "X03n0208_010:0003c14_0": "偈說[宋木+取]勝自覺超世間(至)是名善入如來智。",
    "X03n0208_010:0003c15_0": "勸諸菩薩如實知者。",
    "X03n0208_010:0003c15_1": "是勸進有五種。",
    "X03n0208_010:0003c15_2": "一者遠離身心。",
    "X03n0208_010:0003c16_3": "二者無轉示轉。",
    "X03n0208_010:0003c16_4": "三者道淨平等。",
    "X03n0208_010:0003c16_5": "四者法於如住。",
    "X03n0208_010:0003c17_0": "五者無依寂滅。",
    "X03n0208_010:0003c17_1": "遠離身心。",
    "X03n0208_010:0003c17_2": "應如實知者。",
    "X03n0208_010:0003c17_3": "欲入常身深智慧海。",
    "X03n0208_010:0003c18_4": "離諸心念妄想意根。",
    "X03n0208_010:0003c18_5": "能如實了達。",
    "X03n0208_010:0003c18_6": "無疑惑故。",
    "X03n0208_010:0003c20_0": "偈說欲入善逝深法海(至)永不隨順疑惑心。",
    "X03n0208_010:0003c21_0": "無轉示轉應如實知者。",
    "X03n0208_010:0003c21_1": "轉法輪時。",
    "X03n0208_010:0003c21_2": "知性自性。",
    "X03n0208_010:0003c21_3": "無所轉故。",
    "X03n0208_010:0003c23_0": "偈說一切世界如來境(至)無上導師方便說。",
    "X03n0208_010:0003c24_0": "道淨平等應如實知者。",
    "X03n0208_010:0003c24_1": "菩提無種種相。",
    "X03n0208_010:0003c24_2": "當離妄想。",
    "X03n0208_010:0004a01_0": "如菩提住故。",
    "X03n0208_010:0004a02_0": "偈說曉了諸法無疑惑(至)正意思惟佛菩提。",
    "X03n0208_010:0004a03_0": "法相如住應如實知者。",
    "X03n0208_010:0004a03_1": "法非一二。",
    "X03n0208_010:0004a03_2": "假名說量無量。",
    "X03n0208_010:0004a04_0": "而能流布。",
    "X03n0208_010:0004a04_1": "餘益群生故。",
    "X03n0208_010:0004a05_0": "偈說諦了分別諸法時(至)是知諸佛無量德。",
    "X03n0208_010:0004a06_0": "無依寂滅應如實知者。",
    "X03n0208_010:0004a06_1": "生死涅槃。",
    "X03n0208_010:0004a06_2": "除性無有異。",
    "X03n0208_010:0004a06_3": "除滅憶想。",
    "X03n0208_010:0004a07_4": "如佛住故。",
    "X03n0208_010:0004a08_0": "偈說觀察諸法及眾生(至)是則了知佛法義。",
    "X03n0208_010:0004a09_0": "智照自在者。",
    "X03n0208_010:0004a09_1": "光如前說。",
    "X03n0208_010:0004a09_2": "倍增差別。",
    "X03n0208_010:0004a09_3": "是智自在。",
    "X03n0208_010:0004a09_4": "有十種常身無[得彳]方便。",
    "X03n0208_010:0004a10_5": "一者離盡常住。",
    "X03n0208_010:0004a10_6": "二者自覺聖諦。",
    "X03n0208_010:0004a11_0": "三者住深禪寂。",
    "X03n0208_010:0004a11_1": "四者住涅槃性。",
    "X03n0208_010:0004a11_2": "五者等覺隨順。",
    "X03n0208_010:0004a11_3": "六者具十力智。",
    "X03n0208_010:0004a12_4": "七者同真際。",
    "X03n0208_010:0004a12_5": "八者成敗自在。",
    "X03n0208_010:0004a12_6": "九者宿命他心智。",
    "X03n0208_010:0004a13_7": "十者三明自在。",
    "X03n0208_010:0004a13_8": "離盡常住壽命方便者。",
    "X03n0208_010:0004a14_0": "證二種涅槃。",
    "X03n0208_010:0004a14_1": "智無倫匹。",
    "X03n0208_010:0004a14_2": "度生死海。",
    "X03n0208_010:0004a14_3": "起勝彼岸。",
    "X03n0208_010:0004a14_4": "命根難俎。",
    "X03n0208_010:0004a15_5": "如虗空故。",
    "X03n0208_010:0004a16_0": "偈說大智無有量(至)是則方便力。",
    "X03n0208_010:0004a17_0": "自覺聖諦如實方便者。",
    "X03n0208_010:0004a17_1": "達法緣起。",
    "X03n0208_010:0004a17_2": "入如實際。",
    "X03n0208_010:0004a17_3": "三世一合。",
    "X03n0208_010:0004a18_4": "淨明無二故。",
    "X03n0208_010:0004a19_0": "偈說於諸佛深法(至)是則方便力。",
    "X03n0208_010:0004a20_0": "住深禪寂示身方便者。",
    "X03n0208_010:0004a20_1": "正受三昧。",
    "X03n0208_010:0004a20_2": "如無所度。",
    "X03n0208_010:0004a20_3": "而能現起身雲。",
    "X03n0208_010:0004a21_4": "如應調伏故。",
    "X03n0208_010:0004a22_0": "偈說常樂觀眾生(至)是則方便力。",
    "X03n0208_010:0004a23_0": "住涅槃性常恒方便者。",
    "X03n0208_010:0004a23_1": "解脫自在。",
    "X03n0208_010:0004a23_2": "滿平等大慧。",
    "X03n0208_010:0004a23_3": "巧會有無。",
    "X03n0208_010:0004a24_4": "證解脫道故。",
    "X03n0208_010:0004b01_0": "偈說方便善觀察(至)是則方便力。",
    "X03n0208_010:0004b02_0": "等覺隨順菩提方便者。",
    "X03n0208_010:0004b02_1": "攝一切智。",
    "X03n0208_010:0004b02_2": "究竟如法性。",
    "X03n0208_010:0004b02_3": "善化眾生故。",
    "X03n0208_010:0004b04_0": "偈說隨順調御士(至)是則方便力。",
    "X03n0208_010:0004b05_0": "具十力智解脫方便者。",
    "X03n0208_010:0004b05_1": "用深廣智慧。",
    "X03n0208_010:0004b05_2": "自覺聖道。",
    "X03n0208_010:0004b05_3": "能到是處非處等諸法彼岸。",
    "X03n0208_010:0004b06_4": "能令眾生。",
    "X03n0208_010:0004b06_5": "背生死道。",
    "X03n0208_010:0004b06_6": "趣涅槃故。",
    "X03n0208_010:0004b08_0": "偈說佛說深法義(至)是則方便力。",
    "X03n0208_010:0004b09_0": "同真際無[得彳]方便者。",
    "X03n0208_010:0004b09_1": "到諸法實相。",
    "X03n0208_010:0004b09_2": "心如實虗空。",
    "X03n0208_010:0004b09_3": "善巧無差。",
    "X03n0208_010:0004b10_4": "平等寂滅。",
    "X03n0208_010:0004b10_5": "無障[得彳]故。",
    "X03n0208_010:0004b11_0": "偈說心如虗空界(至)是則方便力。",
    "X03n0208_010:0004b12_0": "成敗自在時數方便者。",
    "X03n0208_010:0004b12_1": "善巧念知。",
    "X03n0208_010:0004b12_2": "日月時朔。",
    "X03n0208_010:0004b12_3": "秊歲劫等。",
    "X03n0208_010:0004b13_4": "隨剎成敗。",
    "X03n0208_010:0004b13_5": "如實知故。",
    "X03n0208_010:0004b14_0": "偈說常記念晝夜(至)是則方便力。",
    "X03n0208_010:0004b15_0": "宿命他心智處方便者。",
    "X03n0208_010:0004b15_1": "於眾生界。",
    "X03n0208_010:0004b15_2": "種種因緣。",
    "X03n0208_010:0004b15_3": "隨諸業果。",
    "X03n0208_010:0004b16_4": "一切遍知故。",
    "X03n0208_010:0004b17_0": "偈說一切群萌類(至)是則方便力。",
    "X03n0208_010:0004b18_0": "三明自在無[得彳]方便者。",
    "X03n0208_010:0004b18_1": "智盡三世。",
    "X03n0208_010:0004b18_2": "一切覺故。",
    "X03n0208_010:0004b18_3": "前七種方便。",
    "X03n0208_010:0004b19_4": "善覺真諦。",
    "X03n0208_010:0004b19_5": "巧會有無際實。",
    "X03n0208_010:0004b19_6": "除涅槃性故。",
    "X03n0208_010:0004b19_7": "後三種方便。",
    "X03n0208_010:0004b20_8": "善覺世諦。",
    "X03n0208_010:0004b20_9": "隨無量差別事。",
    "X03n0208_010:0004b20_10": "一念悉知故。",
    "X03n0208_010:0004b21_0": "偈說一切過去世(至)無比方便力。",
    "X03n0208_010:0004b22_0": "大悲拔苦者。",
    "X03n0208_010:0004b22_1": "光如前說。",
    "X03n0208_010:0004b22_2": "倍增差別。",
    "X03n0208_010:0004b22_3": "是大悲拔苦。",
    "X03n0208_010:0004b22_4": "有十種。",
    "X03n0208_010:0004b23_5": "一者能度難度。",
    "X03n0208_010:0004b23_6": "二者勉彼恐怖。",
    "X03n0208_010:0004b23_7": "三者斷諸放逸。",
    "X03n0208_010:0004b24_8": "四者拔我見地。",
    "X03n0208_010:0004b24_9": "五者與無依為依。",
    "X03n0208_010:0004b24_10": "六者斷邪行結使。",
    "X03n0208_010:0004c01_11": "七者拔苦三有。",
    "X03n0208_010:0004c01_12": "八者勉流住。",
    "X03n0208_010:0004c01_13": "無明住地。",
    "X03n0208_010:0004c01_14": "九者斷無常壞果。",
    "X03n0208_010:0004c02_15": "十者同斷攝。",
    "X03n0208_010:0004c02_16": "能度難度苦。",
    "X03n0208_010:0004c02_17": "大悲者不惜身命。",
    "X03n0208_010:0004c03_18": "修難行苦行。",
    "X03n0208_010:0004c03_19": "度難度海。",
    "X03n0208_010:0004c03_20": "還來法界。",
    "X03n0208_010:0004c03_21": "大師子吼。",
    "X03n0208_010:0004c04_22": "如實利安一切眾生。",
    "X03n0208_010:0004c04_23": "悉令逮得無師智故。",
    "X03n0208_010:0004c05_0": "偈說受持難行法(至)我令悉當度。",
    "X03n0208_010:0004c06_0": "勉彼恐怖救苦大悲者。",
    "X03n0208_010:0004c06_1": "於生死津濟五煩惱中。",
    "X03n0208_010:0004c06_2": "拯接眾生。",
    "X03n0208_010:0004c07_3": "令離恐怖。",
    "X03n0208_010:0004c07_4": "世雄決定。",
    "X03n0208_010:0004c07_5": "能善利安。",
    "X03n0208_010:0004c07_6": "悉解脫故。",
    "X03n0208_010:0004c08_0": "偈說漂浪生死流(至)是則佛境界。",
    "X03n0208_010:0004c09_0": "斷諸放逸救苦大悲者。",
    "X03n0208_010:0004c09_1": "以無漏智。",
    "X03n0208_010:0004c09_2": "大滅諸愛欲。",
    "X03n0208_010:0004c09_3": "究竟清淨。",
    "X03n0208_010:0004c10_4": "住如來道故。",
    "X03n0208_010:0004c11_0": "偈說世間諸放逸(至)是則佛境界。",
    "X03n0208_010:0004c12_0": "拔我見地救苦大悲者。",
    "X03n0208_010:0004c12_1": "以智慧力。",
    "X03n0208_010:0004c12_2": "斷彼眾生邪慢我心。",
    "X03n0208_010:0004c13_3": "遠離亂意。",
    "X03n0208_010:0004c13_4": "住寂滅地故。",
    "X03n0208_010:0004c14_0": "偈說慧者滅本際(至)是則佛境界。",
    "X03n0208_010:0004c15_0": "與無依為依救苦大悲者。",
    "X03n0208_010:0004c15_1": "斷孤焭眾生。",
    "X03n0208_010:0004c15_2": "諸惡趣苦。",
    "X03n0208_010:0004c16_0": "置清涼處故。",
    "X03n0208_010:0004c17_0": "偈說見彼苦眾生(至)是則佛境界。",
    "X03n0208_010:0004c18_0": "斷邪行結使救苦大悲者。",
    "X03n0208_010:0004c18_1": "然以智燈。",
    "X03n0208_010:0004c18_2": "而普照之。",
    "X03n0208_010:0004c18_3": "令彼悉捨邪見闇障。",
    "X03n0208_010:0004c19_4": "住無漏智明故。",
    "X03n0208_010:0004c20_0": "偈說迷惑失正路(至)是則佛境界。",
    "X03n0208_010:0004c21_0": "拔出三有救苦大悲者。",
    "X03n0208_010:0004c21_1": "為漂溺眾生。",
    "X03n0208_010:0004c21_2": "施造法船。",
    "X03n0208_010:0004c21_3": "着濟度脫故。",
    "X03n0208_010:0004c23_0": "偈說一切三有海(至)是則佛境界。",
    "X03n0208_010:0004c24_0": "勉流注無明住地救苦大悲者。",
    "X03n0208_010:0004c24_1": "於變易生死有漏淵中。",
    "X03n0208_010:0005a01_2": "施設法橋。",
    "X03n0208_010:0005a01_3": "悉皆度脫。",
    "X03n0208_010:0005a01_4": "置法性涅槃故。",
    "X03n0208_010:0005a02_0": "偈說無有本實見(至)是則佛境界。",
    "X03n0208_010:0005a03_0": "斷無常壞果救苦大悲者。",
    "X03n0208_010:0005a03_1": "以方便生死手。",
    "X03n0208_010:0005a03_2": "於生死獄。",
    "X03n0208_010:0005a04_3": "挽出眾生。",
    "X03n0208_010:0005a04_4": "悉令窮盡三苦邊際。",
    "X03n0208_010:0005a04_5": "究竟達到入涅槃城故。",
    "X03n0208_010:0005a06_0": "偈說見彼生死獄(至)是則佛境界。",
    "X03n0208_010:0005a07_0": "同類攝救苦大悲者。",
    "X03n0208_010:0005a07_1": "隨緣示現。",
    "X03n0208_010:0005a07_2": "應同彼形。",
    "X03n0208_010:0005a07_3": "令斷恐怖。",
    "X03n0208_010:0005a08_4": "心無疑惑。",
    "X03n0208_010:0005a08_5": "悉寂滅故。",
    "X03n0208_010:0005a09_0": "偈說聞佛甚深法(至)是則天人師。",
    "X03n0208_010:0005a10_0": "普應無[得彳]者。",
    "X03n0208_010:0005a10_1": "光明遍照一切法界。",
    "X03n0208_010:0005a10_2": "悉開示故。",
    "X03n0208_010:0005a10_3": "是自在相。",
    "X03n0208_010:0005a11_4": "有二種。",
    "X03n0208_010:0005a11_5": "一者光網普覺一切世間。",
    "X03n0208_010:0005a11_6": "二者開示法身一切現化。",
    "X03n0208_010:0005a12_7": "光網普覺者。",
    "X03n0208_010:0005a12_8": "流光普照一切法界。",
    "X03n0208_010:0005a12_9": "悉令大眾見法身權道。",
    "X03n0208_010:0005a13_10": "充滿世間。",
    "X03n0208_010:0005a13_11": "自在攝化。",
    "X03n0208_010:0005a13_12": "盡無餘故。",
    "X03n0208_010:0005a14_0": "經說爾時光明(至)淨修梵行。",
    "X03n0208_010:0005a15_0": "開示法身一切現化者。",
    "X03n0208_010:0005a15_1": "是法身自在。",
    "X03n0208_010:0005a15_2": "有七種。",
    "X03n0208_010:0005a15_3": "一者十力智。",
    "X03n0208_010:0005a16_4": "二者覺示現無[得彳]。",
    "X03n0208_010:0005a16_5": "三者妙行清淨。",
    "X03n0208_010:0005a16_6": "四者心淨觀察。",
    "X03n0208_010:0005a17_7": "五者妙音示現。",
    "X03n0208_010:0005a17_8": "六者見佛不存其相。",
    "X03n0208_010:0005a17_9": "七者身藏不思議。",
    "X03n0208_010:0005a18_10": "十力智者。",
    "X03n0208_010:0005a18_11": "知法界境界。",
    "X03n0208_010:0005a18_12": "三明達到。",
    "X03n0208_010:0005a18_13": "一念照盡。",
    "X03n0208_010:0005a19_14": "而無去來。",
    "X03n0208_010:0005a19_15": "湛然寂滅故。",
    "X03n0208_010:0005a20_0": "偈說無量無數劫(至)具足十種力。",
    "X03n0208_010:0005a21_0": "自覺示現無[得彳]者。",
    "X03n0208_010:0005a21_1": "起諸依果。",
    "X03n0208_010:0005a21_2": "隨如如相。",
    "X03n0208_010:0005a21_3": "十方斯現。",
    "X03n0208_010:0005a22_0": "猶如大雲。",
    "X03n0208_010:0005a22_1": "悉普覆故。",
    "X03n0208_010:0005a23_0": "偈說無[得彳]大名稱(至)十力靡不見。",
    "X03n0208_010:0005a24_0": "妙行清淨者。",
    "X03n0208_010:0005a24_1": "證法身依果。",
    "X03n0208_010:0005a24_2": "處彼現化。",
    "X03n0208_010:0005a24_3": "令一切眾生。",
    "X03n0208_010:0005b01_0": "歡喜信樂。",
    "X03n0208_010:0005b01_1": "悉得自在。",
    "X03n0208_010:0005b01_2": "無[得彳]解脫故。",
    "X03n0208_010:0005b02_0": "偈說從始供養佛(至)速逮無上道。",
    "X03n0208_010:0005b03_0": "心淨觀察者。",
    "X03n0208_010:0005b03_1": "覩如來身。",
    "X03n0208_010:0005b03_2": "解一切法。",
    "X03n0208_010:0005b03_3": "入如實際。",
    "X03n0208_010:0005b03_4": "同淨法身。",
    "X03n0208_010:0005b04_5": "住佛所住故。",
    "X03n0208_010:0005b05_0": "偈說能問十方佛(至)斯人等如來。",
    "X03n0208_010:0005b06_0": "妙音示現者。",
    "X03n0208_010:0005b06_1": "轉淨法輪。",
    "X03n0208_010:0005b06_2": "逮無上智。",
    "X03n0208_010:0005b06_3": "雨甘露法雨。",
    "X03n0208_010:0005b06_4": "澤潤群生故。",
    "X03n0208_010:0005b08_0": "偈說聞佛妙音聲(至)甚深難知見。",
    "X03n0208_010:0005b09_0": "見佛不存相者。",
    "X03n0208_010:0005b09_1": "知佛法身。",
    "X03n0208_010:0005b09_2": "是涅槃事。",
    "X03n0208_010:0005b09_3": "不可以有無緣。",
    "X03n0208_010:0005b10_4": "如盲對色。",
    "X03n0208_010:0005b10_5": "寂然不取故。",
    "X03n0208_010:0005b11_0": "偈說[宋木+取]勝所說法(至)乃見真如來。",
    "X03n0208_010:0005b12_0": "身藏不思議者。",
    "X03n0208_010:0005b12_1": "一切世界。",
    "X03n0208_010:0005b12_2": "悉入其中。",
    "X03n0208_010:0005b12_3": "而無障[得彳]。",
    "X03n0208_010:0005b12_4": "如處虗空。",
    "X03n0208_010:0005b13_5": "無有來去。",
    "X03n0208_010:0005b13_6": "示成敗相。",
    "X03n0208_010:0005b13_7": "一切圓俻。",
    "X03n0208_010:0005b13_8": "充滿虗空故。",
    "X03n0208_010:0005b14_0": "偈說眾生種種業(至)充滿虗空界。",
    "X03n0208_010:0005b15_0": "聖者文殊。",
    "X03n0208_010:0005b15_1": "如是於一切處。",
    "X03n0208_010:0005b15_2": "依大光明。",
    "X03n0208_010:0005b15_3": "方便以偈。",
    "X03n0208_010:0005b15_4": "顯示法身。",
    "X03n0208_010:0005b16_5": "無為常住。",
    "X03n0208_010:0005b16_6": "隨眾生噐。",
    "X03n0208_010:0005b16_7": "現四種道。",
    "X03n0208_010:0005b16_8": "充滿法界。",
    "X03n0208_010:0005b17_0": "大眾覩見。",
    "X03n0208_010:0005b17_1": "於常果法身。",
    "X03n0208_010:0005b17_2": "令得正解。",
    "X03n0208_010:0005b17_3": "何以故。",
    "X03n0208_010:0005b17_4": "知佛法"
}