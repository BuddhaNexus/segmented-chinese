[
    {
        "source_sentence": "唐圭峯山沙門宗密述",
        "from": "T48n2015_02b:0409c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一謂有眾生遇善知識。開示上說本覺真心。",
        "from": "T48n2015_02b:0409c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿世曾聞今得解悟若宿生未聞。今聞必不信。或信而不解。雖人人等有佛",
        "from": "T48n2015_02b:0409c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性。",
        "from": "T48n2015_02b:0409c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今現有不信不悟者。",
        "from": "T48n2015_02b:0409c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是此類也四大非我。",
        "from": "T48n2015_02b:0409c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五蘊皆空。",
        "from": "T48n2015_02b:0409c11_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信自真如及三寶德信自心本不虛妄本。",
        "from": "T48n2015_02b:0409c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不變異故曰真如。",
        "from": "T48n2015_02b:0409c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故論云。",
        "from": "T48n2015_02b:0409c12_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自信己性知心妄動無別境界。",
        "from": "T48n2015_02b:0409c12_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云。",
        "from": "T48n2015_02b:0409c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心有四種。",
        "from": "T48n2015_02b:0409c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一信根。",
        "from": "T48n2015_02b:0409c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本樂念真如。",
        "from": "T48n2015_02b:0409c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二信佛。",
        "from": "T48n2015_02b:0409c13_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有無量功德常念親近供養。",
        "from": "T48n2015_02b:0409c13_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三信法。",
        "from": "T48n2015_02b:0409c13_37",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大利益常念修行。",
        "from": "T48n2015_02b:0409c13_46",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四信僧。",
        "from": "T48n2015_02b:0409c13_50",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能修正行自利利他常樂親近。",
        "from": "T48n2015_02b:0409c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟前一翻前二成此第一重也二發悲智願誓證菩提發悲心者欲度眾生。",
        "from": "T48n2015_02b:0409c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發智心者欲了達一切法。",
        "from": "T48n2015_02b:0409c15_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願心者欲修萬行以資悲智三隨分修習施戒忍進。",
        "from": "T48n2015_02b:0409c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及止觀等增長信根論云。",
        "from": "T48n2015_02b:0409c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行有五。",
        "from": "T48n2015_02b:0409c16_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成此信。",
        "from": "T48n2015_02b:0409c16_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀合為一行。",
        "from": "T48n2015_02b:0409c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故六度唯成五也四大菩提心從此顯發以上三心開發。",
        "from": "T48n2015_02b:0409c17_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論云。",
        "from": "T48n2015_02b:0409c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信成就發心者有三種。",
        "from": "T48n2015_02b:0409c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者直心。",
        "from": "T48n2015_02b:0409c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念真如法故。",
        "from": "T48n2015_02b:0409c18_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者深心。",
        "from": "T48n2015_02b:0409c18_29",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂集諸善行故。",
        "from": "T48n2015_02b:0409c18_36",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三發大悲心。",
        "from": "T48n2015_02b:0409c18_42",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲拔一切眾生苦故五以知法性無慳等心等者貪欲嗔恚懈怠散亂愚癡六隨順修行六波羅蜜定慧力用初修名止觀。",
        "from": "T48n2015_02b:0409c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就名定慧我法雙亡初發心時。",
        "from": "T48n2015_02b:0409c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已約教理觀二執空。",
        "from": "T48n2015_02b:0409c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今即定慧力觀自覺空也無自無他證我空五常空常幻證法空六色不異空空不異色。",
        "from": "T48n2015_02b:0409c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故常空常幻也七於色自在一切融通。",
        "from": "T48n2015_02b:0409c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷時不知從自心變。",
        "from": "T48n2015_02b:0409c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不自在。",
        "from": "T48n2015_02b:0409c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今因二空智達之故融通也八於心自在無所不照既不見心外別有境界。",
        "from": "T48n2015_02b:0409c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境界唯心。",
        "from": "T48n2015_02b:0409c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故自在也九滿足方便一念相應。",
        "from": "T48n2015_02b:0409c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺心初起心無初相。",
        "from": "T48n2015_02b:0409c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離微細念心即常住。",
        "from": "T48n2015_02b:0409c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直覺於迷源。",
        "from": "T48n2015_02b:0409c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名究竟覺從初發心即修無念。",
        "from": "T48n2015_02b:0409c26_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至此方得成就。",
        "from": "T48n2015_02b:0409c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就故即入佛位也十心既無念。",
        "from": "T48n2015_02b:0409c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則無別始覺之殊。",
        "from": "T48n2015_02b:0410a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來平等同一覺故。",
        "from": "T48n2015_02b:0410a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥於根本真淨心源。",
        "from": "T48n2015_02b:0410a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應用塵沙。",
        "from": "T48n2015_02b:0410a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡未來際常住法界。",
        "from": "T48n2015_02b:0410a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感而即通。",
        "from": "T48n2015_02b:0410a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名大覺尊。",
        "from": "T48n2015_02b:0410a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛無異佛是本佛。",
        "from": "T48n2015_02b:0410a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無別新成故。",
        "from": "T48n2015_02b:0410a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普見一切眾生皆同成等正覺。",
        "from": "T48n2015_02b:0410a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故迷與悟各有十重順逆相翻。",
        "from": "T48n2015_02b:0410a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行相甚顯。",
        "from": "T48n2015_02b:0410a05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此之第一對前一二。",
        "from": "T48n2015_02b:0410a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此十合前第一。",
        "from": "T48n2015_02b:0410a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘八皆從後逆次翻破前八。",
        "from": "T48n2015_02b:0410a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一中悟前第一本覺。",
        "from": "T48n2015_02b:0410a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻前第二不覺。",
        "from": "T48n2015_02b:0410a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前以不覺乖於本覺。",
        "from": "T48n2015_02b:0410a08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真妄相違故開為兩重。",
        "from": "T48n2015_02b:0410a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以悟即冥符。",
        "from": "T48n2015_02b:0410a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冥符相順無別始悟。",
        "from": "T48n2015_02b:0410a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故合之為一。",
        "from": "T48n2015_02b:0410a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若據逆順之次。",
        "from": "T48n2015_02b:0410a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一合翻前十。",
        "from": "T48n2015_02b:0410a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今以頓悟門中理須直認本體。",
        "from": "T48n2015_02b:0410a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻前本迷故對前一二上云。",
        "from": "T48n2015_02b:0410a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "參差。",
        "from": "T48n2015_02b:0410a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是此也二中。",
        "from": "T48n2015_02b:0410a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由怖生死之苦發三心自度度他故。",
        "from": "T48n2015_02b:0410a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對前第十六道生死。",
        "from": "T48n2015_02b:0410a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三修五行翻前第九造業。",
        "from": "T48n2015_02b:0410a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四三心開發翻前第八三毒悲心翻瞋智心翻癡願心翻貪五證我空翻前第七我執。",
        "from": "T48n2015_02b:0410a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六證法空翻前第六法執。",
        "from": "T48n2015_02b:0410a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七色自在翻前第五境界。",
        "from": "T48n2015_02b:0410a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八心自在翻前第四能見。",
        "from": "T48n2015_02b:0410b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九離念翻前第三念起。",
        "from": "T48n2015_02b:0410b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故十成佛佛無別體。",
        "from": "T48n2015_02b:0410b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是始覺。",
        "from": "T48n2015_02b:0410b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻前第二不覺。",
        "from": "T48n2015_02b:0410b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合前第一本覺。",
        "from": "T48n2015_02b:0410b03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始本不二。",
        "from": "T48n2015_02b:0410b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯是真如顯現。",
        "from": "T48n2015_02b:0410b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為法身大覺。",
        "from": "T48n2015_02b:0410b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故與初悟無二體也。",
        "from": "T48n2015_02b:0410b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順逆之次參差正由此矣。",
        "from": "T48n2015_02b:0410b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一即因該果海。",
        "from": "T48n2015_02b:0410b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十即果徹因源。",
        "from": "T48n2015_02b:0410b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃經云。",
        "from": "T48n2015_02b:0410b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心畢竟二不別。",
        "from": "T48n2015_02b:0410b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華嚴經云。",
        "from": "T48n2015_02b:0410b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發心時得阿耨菩提。",
        "from": "T48n2015_02b:0410b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正是此意。",
        "from": "T48n2015_02b:0410b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然雖順逆相對前後相照法義昭彰。",
        "from": "T48n2015_02b:0410b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶恐文不頓書意不並顯。",
        "from": "T48n2015_02b:0410b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首尾相隔不得齊覩。",
        "from": "T48n2015_02b:0410b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今更畫之為圖。",
        "from": "T48n2015_02b:0410b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令凡聖本末大藏經宗一時現於心鏡。",
        "from": "T48n2015_02b:0410b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此圖頭在中心云眾生心三字是也。",
        "from": "T48n2015_02b:0410b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此三字讀之。",
        "from": "T48n2015_02b:0410b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分向兩畔。",
        "from": "T48n2015_02b:0410b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱畫表淨妙之法。",
        "from": "T48n2015_02b:0410b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墨畫表垢染之法。",
        "from": "T48n2015_02b:0410b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一尋血脈詳之。",
        "from": "T48n2015_02b:0410b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朱為此○號。",
        "from": "T48n2015_02b:0410b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記淨法十重之次。",
        "from": "T48n2015_02b:0410b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墨為此●號。",
        "from": "T48n2015_02b:0410b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記染法十重之次。",
        "from": "T48n2015_02b:0410b14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此號是本論之文。",
        "from": "T48n2015_02b:0410b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此點是義說論文爾。",
        "from": "T48n2015_02b:0410b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　迷有十重　此是迷真逐妄從微細順次生起展轉至麁之相。",
        "from": "T48n2015_02b:0410c01_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詳究前述諦觀此圖。",
        "from": "T48n2015_02b:0410d01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對勘自他及想賢聖。",
        "from": "T48n2015_02b:0410d01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為同為異。",
        "from": "T48n2015_02b:0410d02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為真為妄。",
        "from": "T48n2015_02b:0410d02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我在何門。",
        "from": "T48n2015_02b:0410d02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛在何位。",
        "from": "T48n2015_02b:0410d02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為當別體。",
        "from": "T48n2015_02b:0410d03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為復同源。",
        "from": "T48n2015_02b:0410d03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即自然不執著於凡夫。",
        "from": "T48n2015_02b:0410d03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不僣濫於聖位。",
        "from": "T48n2015_02b:0410d04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不耽滯於愛見。",
        "from": "T48n2015_02b:0410d04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不推讓於佛心也。",
        "from": "T48n2015_02b:0410d05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然初十重是一藏經所治法身中第一重煩惱之病生起元由次三重漸漸加增我法二執乃至麁重三毒造業慧滅受報之狀。",
        "from": "T48n2015_02b:0410d07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後十重是法身信方服藥前三重汗出汗出病差菩提心開發將理方法六波羅蜜漸漸減退從六至九乃至平復成佛之狀。",
        "from": "T48n2015_02b:0410d09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如有一人在纏法身諸根具足恒沙功德強壯常住不變妄不能染多藝恒沙妙用。",
        "from": "T48n2015_02b:0410d10_28",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽然得病無始無明漸漸加增其次七重乃至氣絕第十重唯心頭暖賴耶識中無漏智種。",
        "from": "T48n2015_02b:0410d12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽遇良醫大善知識知其命在見凡夫人即心是佛。",
        "from": "T48n2015_02b:0410d12_30",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "強灌神藥初聞不信頻就不捨忽然蘇醒悟解初未能言初悟之人未能說法答他問難皆悉未得乃至漸語能說法也漸能行履十地十波羅蜜直至平復成佛。",
        "from": "T48n2015_02b:0410d15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所解伎藝無所不為神通光明一切種智以法一一對合。",
        "from": "T48n2015_02b:0410d16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何有疑而不除也。",
        "from": "T48n2015_02b:0410d16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即知一切眾生不能神變作用者。",
        "from": "T48n2015_02b:0410d17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以業識惑病所拘。",
        "from": "T48n2015_02b:0410d17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非已法身不具妙德。",
        "from": "T48n2015_02b:0410d18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今愚者難云。",
        "from": "T48n2015_02b:0410d18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝既頓悟即佛。",
        "from": "T48n2015_02b:0410d19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不放光者。",
        "from": "T48n2015_02b:0410d19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何殊令病未平復之人。",
        "from": "T48n2015_02b:0410d19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便作身上本藝。",
        "from": "T48n2015_02b:0410d20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然世醫處方必先候脈。",
        "from": "T48n2015_02b:0410d20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不對病狀輕重。",
        "from": "T48n2015_02b:0410d21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何辨方書是非。",
        "from": "T48n2015_02b:0410d21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不約痊愈淺深。",
        "from": "T48n2015_02b:0410d21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何論將理法則。",
        "from": "T48n2015_02b:0410d22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法醫亦爾。",
        "from": "T48n2015_02b:0410d22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今具述迷悟各十重之本末。",
        "from": "T48n2015_02b:0410d23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將前經論統三種之淺深。",
        "from": "T48n2015_02b:0410d23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相對照之如指其掌。",
        "from": "T48n2015_02b:0410d24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸諸學者。",
        "from": "T48n2015_02b:0410d24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善自安心行。",
        "from": "T48n2015_02b:0410d24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即任隨寄一門解。",
        "from": "T48n2015_02b:0410d25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即須通達無礙。",
        "from": "T48n2015_02b:0410d25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又不得慮其偏局。",
        "from": "T48n2015_02b:0410d26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便󰢱蕩無所指歸。",
        "from": "T48n2015_02b:0410d26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須洞鑒源流。",
        "from": "T48n2015_02b:0410d26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令分菽麥。",
        "from": "T48n2015_02b:0410d27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必使同中見異異處而同。",
        "from": "T48n2015_02b:0410d27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏡像千差。",
        "from": "T48n2015_02b:0410d27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫執好醜。",
        "from": "T48n2015_02b:0410d28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏡明一相。",
        "from": "T48n2015_02b:0410d28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫忌青黃。",
        "from": "T48n2015_02b:0410d28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千器一金雖無阻隔。",
        "from": "T48n2015_02b:0411b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一珠千影元不混和。",
        "from": "T48n2015_02b:0411b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建志運心等虛空界。",
        "from": "T48n2015_02b:0411b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "防非察念在毫釐間。",
        "from": "T48n2015_02b:0411b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見色聞聲。",
        "from": "T48n2015_02b:0411b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自思如影響否。",
        "from": "T48n2015_02b:0411b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "動身舉意。",
        "from": "T48n2015_02b:0411b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自料為佛法否。",
        "from": "T48n2015_02b:0411b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "美膳糲飡。",
        "from": "T48n2015_02b:0411b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自想無嫌愛否。",
        "from": "T48n2015_02b:0411b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "炎涼凍暖。",
        "from": "T48n2015_02b:0411b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自看免避就否。",
        "from": "T48n2015_02b:0411b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至利衰毀譽稱譏苦樂。",
        "from": "T48n2015_02b:0411b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一審自反照實得情意一種否。",
        "from": "T48n2015_02b:0411b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必若自料未得如此。",
        "from": "T48n2015_02b:0411b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即色未似影。",
        "from": "T48n2015_02b:0411b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲未似響也。",
        "from": "T48n2015_02b:0411b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設實頓悟終須漸修。",
        "from": "T48n2015_02b:0411b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫如貧窮人終日數他寶自無半錢分。",
        "from": "T48n2015_02b:0411b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六祖大師云。",
        "from": "T48n2015_02b:0411b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說一切法。",
        "from": "T48n2015_02b:0411b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為度一切心。",
        "from": "T48n2015_02b:0411b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我無一切心。",
        "from": "T48n2015_02b:0411b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何須一切法。",
        "from": "T48n2015_02b:0411b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今時人但將此語輕於聽學。",
        "from": "T48n2015_02b:0411b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都不自觀實無心否。",
        "from": "T48n2015_02b:0411b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無心者。",
        "from": "T48n2015_02b:0411b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八風不能動也。",
        "from": "T48n2015_02b:0411b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設習氣未盡。",
        "from": "T48n2015_02b:0411b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗔念任運起時。",
        "from": "T48n2015_02b:0411b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無打罵讐他心。",
        "from": "T48n2015_02b:0411b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪念任運起時。",
        "from": "T48n2015_02b:0411b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無營求令得心。",
        "from": "T48n2015_02b:0411b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見他榮盛時。",
        "from": "T48n2015_02b:0411b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無嫉妬求勝心。",
        "from": "T48n2015_02b:0411b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切時中於自己無憂饑凍心。",
        "from": "T48n2015_02b:0411b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無恐人輕賤心。",
        "from": "T48n2015_02b:0411b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至種種此等亦得名為無一切心也。",
        "from": "T48n2015_02b:0411b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名修道若得對違順等境。",
        "from": "T48n2015_02b:0411b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都無貪嗔愛惡。",
        "from": "T48n2015_02b:0411b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名得道。",
        "from": "T48n2015_02b:0411b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各反照。",
        "from": "T48n2015_02b:0411b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有病即治。",
        "from": "T48n2015_02b:0411b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無病勿藥。",
        "from": "T48n2015_02b:0411b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問貪嗔等即空便名無一切心。",
        "from": "T48n2015_02b:0411b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何必對治。",
        "from": "T48n2015_02b:0411b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答若爾汝今忽遭重病痛苦。",
        "from": "T48n2015_02b:0411b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛苦即空。",
        "from": "T48n2015_02b:0411b19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便名無病。",
        "from": "T48n2015_02b:0411b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何必藥治。",
        "from": "T48n2015_02b:0411b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須知貪嗔空而能發業。",
        "from": "T48n2015_02b:0411b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業亦空而能招苦。",
        "from": "T48n2015_02b:0411b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦亦空只麼難忍。",
        "from": "T48n2015_02b:0411b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故前圖中云。",
        "from": "T48n2015_02b:0411b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體空成事如杌木上鬼全空。",
        "from": "T48n2015_02b:0411b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只麼驚人。",
        "from": "T48n2015_02b:0411b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得奔走倒地。",
        "from": "T48n2015_02b:0411b22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭破額裂若以業即空。",
        "from": "T48n2015_02b:0411b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空只麼造業。",
        "from": "T48n2015_02b:0411b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即須知地獄燒煮痛楚亦空。",
        "from": "T48n2015_02b:0411b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空只麼楚痛。",
        "from": "T48n2015_02b:0411b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若云亦任楚痛者。",
        "from": "T48n2015_02b:0411b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即現今設有人以火燒刀斫。",
        "from": "T48n2015_02b:0411b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝何得不任。",
        "from": "T48n2015_02b:0411b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今觀學道者。",
        "from": "T48n2015_02b:0411b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞一句違情語猶不能任。",
        "from": "T48n2015_02b:0411b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈肯任燒斫乎如此者十中有九也問上來所敘三種教三宗禪。",
        "from": "T48n2015_02b:0411b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十所以十別異輪迴及修證。",
        "from": "T48n2015_02b:0411b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又各十重理無不窮事無不備。",
        "from": "T48n2015_02b:0411b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "研尋玩味足可修心。",
        "from": "T48n2015_02b:0411b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何必更讀藏經及集諸禪偈數過百卷。",
        "from": "T48n2015_02b:0412b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答眾生惑病各各不同。",
        "from": "T48n2015_02b:0412b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數等塵沙。",
        "from": "T48n2015_02b:0412b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何唯八萬。",
        "from": "T48n2015_02b:0412b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸聖方便有無量門。",
        "from": "T48n2015_02b:0412b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心性相有無量義。",
        "from": "T48n2015_02b:0412b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上來所述但是提綱。",
        "from": "T48n2015_02b:0412b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖統之不出所陳。",
        "from": "T48n2015_02b:0412c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而用之千變萬勢。",
        "from": "T48n2015_02b:0412c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況先哲後俊各有所長。",
        "from": "T48n2015_02b:0412c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古聖今賢各有所利。",
        "from": "T48n2015_02b:0412c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故集諸家之善記。",
        "from": "T48n2015_02b:0412c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其宗徒有不安者亦不改易。",
        "from": "T48n2015_02b:0412c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但遺闕意義者注而圓之。",
        "from": "T48n2015_02b:0412d01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文字繁重者注而辨之。",
        "from": "T48n2015_02b:0412d01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍於每一家之首注評大意。",
        "from": "T48n2015_02b:0412d02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "提綱意在張網。",
        "from": "T48n2015_02b:0412d02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可去網存綱華嚴云。",
        "from": "T48n2015_02b:0412d03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張大教網。",
        "from": "T48n2015_02b:0412d03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漉人天魚。",
        "from": "T48n2015_02b:0412d03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置涅槃岸舉領意在著衣。",
        "from": "T48n2015_02b:0412d03_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可棄衣取領。",
        "from": "T48n2015_02b:0412d04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若但集而不敘。",
        "from": "T48n2015_02b:0412d04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無綱之網。",
        "from": "T48n2015_02b:0412d04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若但敘而不集。",
        "from": "T48n2015_02b:0412d05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如無網之綱。",
        "from": "T48n2015_02b:0412d05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思而悉之不煩設難。",
        "from": "T48n2015_02b:0412d06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然剋己獨善之輩。",
        "from": "T48n2015_02b:0412d06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不必遍尋。",
        "from": "T48n2015_02b:0412d06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲為人之師。",
        "from": "T48n2015_02b:0412d07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直須備通本末。",
        "from": "T48n2015_02b:0412d07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好學之士披閱之時。",
        "from": "T48n2015_02b:0412d07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必須一一詳之。",
        "from": "T48n2015_02b:0412d08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是何宗何教之義。",
        "from": "T48n2015_02b:0412d08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用之不錯皆成妙藥。",
        "from": "T48n2015_02b:0412d09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用之差互皆成反惡。",
        "from": "T48n2015_02b:0412d09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然結集次第不易排倫。",
        "from": "T48n2015_02b:0412d10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "據入道方便即合。",
        "from": "T48n2015_02b:0412d10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先開本心。",
        "from": "T48n2015_02b:0412d10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次通理事。",
        "from": "T48n2015_02b:0412d11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次讚法勝妙呵世過患。",
        "from": "T48n2015_02b:0412d11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次勸誡修習。",
        "from": "T48n2015_02b:0412d11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後示以對治方便漸次門戶。",
        "from": "T48n2015_02b:0412d12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲依此編之。",
        "from": "T48n2015_02b:0412d12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃覺師資昭穆顛倒交不穩便。",
        "from": "T48n2015_02b:0412d13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且如六代之後。",
        "from": "T48n2015_02b:0412d13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多述一真。",
        "from": "T48n2015_02b:0412d14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達摩大師却教四行。",
        "from": "T48n2015_02b:0412d14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可孫為部首。",
        "from": "T48n2015_02b:0412d15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祖為末篇。",
        "from": "T48n2015_02b:0412d15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數日之中思惟此事。",
        "from": "T48n2015_02b:0412d15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲將達摩宗枝之外為首。",
        "from": "T48n2015_02b:0412d16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以彼諸家所教之禪。",
        "from": "T48n2015_02b:0412d16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所述之理。",
        "from": "T48n2015_02b:0412d17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非代代可師。",
        "from": "T48n2015_02b:0412d17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通方之常道。",
        "from": "T48n2015_02b:0412d17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或因以彼修鍊功至證得。",
        "from": "T48n2015_02b:0412d18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以之示人求那慧稠臥輪之類或因聽讀聖教生解。",
        "from": "T48n2015_02b:0412d19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以之攝眾慧聞禪師之類或降其跡而適性。",
        "from": "T48n2015_02b:0412d20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時間警策群迷志公傅大士王梵志之類或高其節而守法。",
        "from": "T48n2015_02b:0412d21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一國中軌範僧侶廬山遠公之類其所製作。",
        "from": "T48n2015_02b:0412d21_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或詠歌至道。",
        "from": "T48n2015_02b:0412d22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或嗟歎迷凡。",
        "from": "T48n2015_02b:0412d22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或但釋義。",
        "from": "T48n2015_02b:0412d22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或唯勵行。",
        "from": "T48n2015_02b:0412d23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或籠羅諸教。",
        "from": "T48n2015_02b:0412d23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竟不指南。",
        "from": "T48n2015_02b:0412d23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或偏讚一門。",
        "from": "T48n2015_02b:0412d23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事不通眾。",
        "from": "T48n2015_02b:0412d24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖皆禪門影響佛法笙簧。",
        "from": "T48n2015_02b:0412d24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若始終依之為釋迦法。",
        "from": "T48n2015_02b:0412d25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即未可也天台言教廣本雖備有始終　又不在此集之內以心傳嗣。",
        "from": "T48n2015_02b:0412d26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯達摩宗。",
        "from": "T48n2015_02b:0412d26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心是法源。",
        "from": "T48n2015_02b:0412d26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何法不備。",
        "from": "T48n2015_02b:0412d26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所修禪行似局一門。",
        "from": "T48n2015_02b:0412d27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所傳心宗實通三學。",
        "from": "T48n2015_02b:0412d27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況覆尋其始始者迦葉阿難親稟釋迦。",
        "from": "T48n2015_02b:0413a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "代代相承一一面授。",
        "from": "T48n2015_02b:0413a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十七世有云。",
        "from": "T48n2015_02b:0413a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西國已有二十八祖者。",
        "from": "T48n2015_02b:0413a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下祖傳序中。",
        "from": "T48n2015_02b:0413a02_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即具分析至於吾師緬思何幸得為釋迦三十八代嫡孫也故今所集之次者先錄達摩一宗。",
        "from": "T48n2015_02b:0413a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次編諸家雜述。",
        "from": "T48n2015_02b:0413a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後寫印一宗聖教。",
        "from": "T48n2015_02b:0413a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖教居後者。",
        "from": "T48n2015_02b:0413a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如世上官司文案曹判為先。",
        "from": "T48n2015_02b:0413a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊官判後也唯寫文剋的者十餘卷也就當宗之中。",
        "from": "T48n2015_02b:0413a06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以尊卑昭穆展轉綸緒而為次第。",
        "from": "T48n2015_02b:0413a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中頓漸相間。",
        "from": "T48n2015_02b:0413a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理行相參。",
        "from": "T48n2015_02b:0413a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遞相解縛。",
        "from": "T48n2015_02b:0413a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然心無所住淨名云。",
        "from": "T48n2015_02b:0413a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪著禪味是菩薩縛。",
        "from": "T48n2015_02b:0413a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以方便生是菩薩解。",
        "from": "T48n2015_02b:0413a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又瑜伽說悲增智增。",
        "from": "T48n2015_02b:0413a09_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相解縛悟修之道既備。",
        "from": "T48n2015_02b:0413a09_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解行於是圓通。",
        "from": "T48n2015_02b:0413a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次傍覽諸家以廣聞見。",
        "from": "T48n2015_02b:0413a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後𮘗讀聖教。",
        "from": "T48n2015_02b:0413a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印始終。",
        "from": "T48n2015_02b:0413a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈不因此正法久住在。",
        "from": "T48n2015_02b:0413a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "余之志雖無所求。",
        "from": "T48n2015_02b:0413a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然護法之心。",
        "from": "T48n2015_02b:0413a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神理不應屈。",
        "from": "T48n2015_02b:0413a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我繼襲之功。",
        "from": "T48n2015_02b:0413a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先祖不應捨我。",
        "from": "T48n2015_02b:0413a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法施之恩。",
        "from": "T48n2015_02b:0413a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後學不應辜我。",
        "from": "T48n2015_02b:0413a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不辜不屈不捨。",
        "from": "T48n2015_02b:0413a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即願共諸同緣。",
        "from": "T48n2015_02b:0413a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速會諸佛會也。",
        "from": "T48n2015_02b:0413a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪源諸詮集都序卷下之二",
        "from": "T48n2015_02b:0413a16_100",
        "context_with_next_sentence": false
    }
]