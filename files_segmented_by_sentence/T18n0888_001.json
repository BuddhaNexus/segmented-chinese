[
    {
        "source_sentence": "一切祕密最上名義大教王儀軌",
        "from": "T18n0888_001:0536c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卷上",
        "from": "T18n0888_001:0536c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此於瑜伽大部中略出。",
        "from": "T18n0888_001:0536c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏傳法大師賜紫沙門臣施護奉　詔譯歸命一切佛。",
        "from": "T18n0888_001:0536c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五身作者如是生，　　不見眾生決定身；",
        "from": "T18n0888_001:0536c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不見決定心，　　觀想諸佛亦如是！",
        "from": "T18n0888_001:0536c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲頂禮佛大士！",
        "from": "T18n0888_001:0536c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　應當頂禮自實智，佛智自智本同源，　　祕密性中無二相。",
        "from": "T18n0888_001:0536c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若了一切無我生，　　所生即是無二智；",
        "from": "T18n0888_001:0536c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛非愛中得解脫，　　彼頂禮相無所有。",
        "from": "T18n0888_001:0537a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非已生非現生，　　已生已謝現無住；",
        "from": "T18n0888_001:0537a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想諸佛相亦然，　　應當頂禮自實智。",
        "from": "T18n0888_001:0537a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛非愛本無分位，　　隨眾生心而動亂；",
        "from": "T18n0888_001:0537a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染種煩惱過失中，　　悉成一切相應事。",
        "from": "T18n0888_001:0537a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生有身故有苦，　　此苦所因心所生；",
        "from": "T18n0888_001:0537a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有於心善覺了，　　即能出離一切苦。",
        "from": "T18n0888_001:0537a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方三世一切佛，　　毘盧遮那一佛攝；",
        "from": "T18n0888_001:0537a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切佛證覺圓，　　故現佛身救生死。",
        "from": "T18n0888_001:0537a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利一切眾生故，　　悲心起作方便事；",
        "from": "T18n0888_001:0537a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因性平等既相應，　　果性由斯而出現。",
        "from": "T18n0888_001:0537a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "果真實故平等住，　　彼因真實示求相；",
        "from": "T18n0888_001:0537a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中若有實求心，　　即長輪迴諸種子。",
        "from": "T18n0888_001:0537a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應法從相應生，　　隨所愛法不可得；",
        "from": "T18n0888_001:0537a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有得乃是一法存，　　彼即不離分別相。",
        "from": "T18n0888_001:0537a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念觀佛無所緣，　　正念觀法法相應；",
        "from": "T18n0888_001:0537a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他二行亦復然！",
        "from": "T18n0888_001:0537a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　佛二足尊常所說。",
        "from": "T18n0888_001:0537a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自相如實安住已，　　想入諸佛影像中；",
        "from": "T18n0888_001:0537a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念觀佛得相應，　　故諸佛雲從此現。",
        "from": "T18n0888_001:0537a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自相如實安住已，　　想入金剛法性中；",
        "from": "T18n0888_001:0537a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念觀法得相應，　　起大法雲而普遍。",
        "from": "T18n0888_001:0537a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相者所謂幖幟義，　　破者即是破相心；",
        "from": "T18n0888_001:0537a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種即相幖幟門，　　能破煩惱為最上。",
        "from": "T18n0888_001:0537a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身即是諸眾生，　　自心即攝一切法；",
        "from": "T18n0888_001:0537a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無我中得相應，　　諸魔由斯而自滅。",
        "from": "T18n0888_001:0537a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心如實證覺已，　　彼所覺心不可得；",
        "from": "T18n0888_001:0537a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心如實正了知，　　而諸魔心亦如是。",
        "from": "T18n0888_001:0537a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應相應性和合，　　是性求生不可得；",
        "from": "T18n0888_001:0537a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想諸佛若相應，　　是故我即同諸佛。",
        "from": "T18n0888_001:0537a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩地智所出生，　　平等一切佛自性；",
        "from": "T18n0888_001:0537b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛相應行既非無，　　從相應心得佛性。",
        "from": "T18n0888_001:0537b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於妙性有所見，　　彼麁染性不能除；",
        "from": "T18n0888_001:0537b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於性無性若差殊，　　而觀想心即分別。",
        "from": "T18n0888_001:0537b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可以性觀於性，　　是中觀亦無所觀；",
        "from": "T18n0888_001:0537b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想及性二俱無，　　由心動轉故差別。",
        "from": "T18n0888_001:0537b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非眾生境非佛境，　　是中非佛非眾生；",
        "from": "T18n0888_001:0537b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生自心即佛心，　　覺了無佛無佛智。",
        "from": "T18n0888_001:0537b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於因性如實見，　　果性如實亦復然；",
        "from": "T18n0888_001:0537b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此即三摩地智門，　　無二相應平等行。",
        "from": "T18n0888_001:0537b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法因性不可得，　　諸法果性亦復然；",
        "from": "T18n0888_001:0537b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "實智觀故性本真，　　此即相應平等行。",
        "from": "T18n0888_001:0537b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法本無因而觀因，　　法本無果而觀果；",
        "from": "T18n0888_001:0537b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於因果有所觀，　　是即自心而起著。",
        "from": "T18n0888_001:0537b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀因當觀實智因，　　觀果當觀祕密果；",
        "from": "T18n0888_001:0537b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密無二相應中，　　應當如是自觀察。",
        "from": "T18n0888_001:0537b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能了知真實性，　　即知祕密中祕密；",
        "from": "T18n0888_001:0537b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深祕密既了知，　　乃成最上相應行。",
        "from": "T18n0888_001:0537b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於愛境中平等，　　即是非愛境自性；",
        "from": "T18n0888_001:0537b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛非愛境諸相中，　　如來雖觀而無見。",
        "from": "T18n0888_001:0537b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應行者相應生，　　非無表了無分量；",
        "from": "T18n0888_001:0537b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自智若入清淨門，　　諸佛如來即清淨。",
        "from": "T18n0888_001:0537b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是身語心出生，　　祕密無二相應行；",
        "from": "T18n0888_001:0537b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量初四種表了門，　　謂即相應四印法。",
        "from": "T18n0888_001:0537b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯摩印為身密印；",
        "from": "T18n0888_001:0537b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　法印名為語密印；",
        "from": "T18n0888_001:0537b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大印即是心印門，　　三昧耶印印一切。",
        "from": "T18n0888_001:0537b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想諸印印諸法，　　即祕密主三相應；",
        "from": "T18n0888_001:0537b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性如實得正知，　　三摩地智善施作。",
        "from": "T18n0888_001:0537b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由身語心善表了，　　起諸教相種種事；",
        "from": "T18n0888_001:0537b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然其不離三密門，　　巧業金剛故安立。",
        "from": "T18n0888_001:0537c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五部如來真實智，　　即是祕密無上智；",
        "from": "T18n0888_001:0537c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密四印若相應，　　能作相應語悉地。",
        "from": "T18n0888_001:0537c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地水火風四大種，　　即是所說四密印；",
        "from": "T18n0888_001:0537c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四印平等若相應，　　四種明妃皆合集。",
        "from": "T18n0888_001:0537c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛眼菩薩為地大；",
        "from": "T18n0888_001:0537c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　摩摩枳尊為水大；",
        "from": "T18n0888_001:0537c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白衣菩薩為火大；",
        "from": "T18n0888_001:0537c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　多羅菩薩為風大。",
        "from": "T18n0888_001:0537c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東方帝釋天地大；",
        "from": "T18n0888_001:0537c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　西方水天為水大；",
        "from": "T18n0888_001:0537c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南方火天為火大；",
        "from": "T18n0888_001:0537c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　北方風天為風大。",
        "from": "T18n0888_001:0537c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知帝釋天黃色，　　壇相四方作增益；",
        "from": "T18n0888_001:0537c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水天白色壇相圓，　　作息災法應如教；",
        "from": "T18n0888_001:0537c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火天赤色壇三角，　　作敬愛事如本儀；",
        "from": "T18n0888_001:0537c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風天黑色壇弓形，　　忿怒心作降伏事。",
        "from": "T18n0888_001:0537c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從四大種所出生，　　四種事業如其次；",
        "from": "T18n0888_001:0537c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉此四種事業輪，　　最上悉地皆圓滿。",
        "from": "T18n0888_001:0537c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災當依佛眼法；",
        "from": "T18n0888_001:0537c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　增益蓮華金剛法；",
        "from": "T18n0888_001:0537c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛毘盧遮那法；",
        "from": "T18n0888_001:0537c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　降伏金剛忿怒法。",
        "from": "T18n0888_001:0537c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初夜當作息災法；",
        "from": "T18n0888_001:0537c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　平旦作彼增益法；",
        "from": "T18n0888_001:0537c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日中應作降伏法；",
        "from": "T18n0888_001:0537c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　中夜作於敬愛法。",
        "from": "T18n0888_001:0537c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息災賢聖像白色；",
        "from": "T18n0888_001:0537c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　增益賢聖像黃色；",
        "from": "T18n0888_001:0537c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛賢聖像赤色；",
        "from": "T18n0888_001:0537c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　降伏賢聖像黑色。",
        "from": "T18n0888_001:0537c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知三摩地智生，　　最上悉地諸事業；",
        "from": "T18n0888_001:0537c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想諸佛本清淨，　　一切佛事皆成就。",
        "from": "T18n0888_001:0537c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中方毘盧遮那佛！",
        "from": "T18n0888_001:0537c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　四方金剛界如來！",
        "from": "T18n0888_001:0537c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想五部主真實身，　　一切所作皆成就。",
        "from": "T18n0888_001:0537c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心復想大明妃！",
        "from": "T18n0888_001:0537c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　相應者持相應法；",
        "from": "T18n0888_001:0537c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能生一切諸佛身，　　此是金剛界佛母！",
        "from": "T18n0888_001:0537c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間貪瞋癡三毒，　　即是金剛界如來！",
        "from": "T18n0888_001:0537c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由佛祕密清淨門，　　了彼三毒成無毒，",
        "from": "T18n0888_001:0537c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於貪瞋癡三毒，　　獲得三界中自在；",
        "from": "T18n0888_001:0538a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛大士破毒心，　　觀想即是諸佛智。",
        "from": "T18n0888_001:0538a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若了諸佛離貪心，　　菩提心從貪性出；",
        "from": "T18n0888_001:0538a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能出生普賢行，　　貪心即是佛如來！",
        "from": "T18n0888_001:0538a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若了諸佛調伏心，　　微妙智從瞋性出；",
        "from": "T18n0888_001:0538a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能出生一切智，　　瞋心即是佛如來！",
        "from": "T18n0888_001:0538a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於自心能覺了，　　光明從彼癡性出；",
        "from": "T18n0888_001:0538a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能出生一切佛，　　癡心即是佛如來！",
        "from": "T18n0888_001:0538a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若了諸佛無我心，　　諸親友從我見出；",
        "from": "T18n0888_001:0538a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能出生一切佛，　　慈心即是佛如來！",
        "from": "T18n0888_001:0538a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛愛為普觀照，　　諸佛慈悲為法語；",
        "from": "T18n0888_001:0538a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切無畏即大施，　　此名諸佛敬愛法。",
        "from": "T18n0888_001:0538a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施相應歡喜地；",
        "from": "T18n0888_001:0538a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　持戒具足離垢地；",
        "from": "T18n0888_001:0538a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍辱堅固發光地；",
        "from": "T18n0888_001:0538a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　精進勤策焰慧地；",
        "from": "T18n0888_001:0538a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定無見現前地；",
        "from": "T18n0888_001:0538a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　妙慧了知難勝地；",
        "from": "T18n0888_001:0538a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大方便遠行地；",
        "from": "T18n0888_001:0538a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　勝力圓成不動地；",
        "from": "T18n0888_001:0538a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誓願增廣善慧地；",
        "from": "T18n0888_001:0538a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　智修成就法雲地；",
        "from": "T18n0888_001:0538a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛如來妙智身，　　是名十一地圓滿。",
        "from": "T18n0888_001:0538a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十聖修十波羅密，　　十力自在諸行圓；",
        "from": "T18n0888_001:0538a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是超過十地已，　　佛相應法然後得。",
        "from": "T18n0888_001:0538a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲金剛水成正覺，　　法甘露味即相應；",
        "from": "T18n0888_001:0538a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等同無邊一切佛，　　一切取捨皆遠離。",
        "from": "T18n0888_001:0538a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來清淨相應法，　　飲金剛水淨亦然；",
        "from": "T18n0888_001:0538a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法甘露味適其心，　　金剛弟子亦如是。",
        "from": "T18n0888_001:0538a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來清淨即菩提，　　而菩提心然後得；",
        "from": "T18n0888_001:0538a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心主若安住，　　應知菩薩即如來！",
        "from": "T18n0888_001:0538a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理獲得解脫句，　　而菩提心無有上；",
        "from": "T18n0888_001:0538a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若住金剛薩埵心，　　現生成就相應法。",
        "from": "T18n0888_001:0538a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯摩三密三昧門，　　得三昧眼常觀照；",
        "from": "T18n0888_001:0538a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生界趣廣無邊，　　彼三昧母持無盡。",
        "from": "T18n0888_001:0538b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三金剛體善安住，　　三昧耶印印一切；",
        "from": "T18n0888_001:0538b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三密三昧法印門，　　而語金剛不厭離。",
        "from": "T18n0888_001:0538b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼一切世界中，　　廣說乃至踰始多；",
        "from": "T18n0888_001:0538b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大印心密若相應，　　而心金剛不厭離。",
        "from": "T18n0888_001:0538b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界一切所愛道，　　廣說乃至踰始多；",
        "from": "T18n0888_001:0538b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍知一切所愛門，　　一切隨應受無著。",
        "from": "T18n0888_001:0538b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵所出生，　　妙踰始多一切印；",
        "from": "T18n0888_001:0538b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼所行若相應，　　一切印中自在用。",
        "from": "T18n0888_001:0538b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上祕密相應行，　　出生三摩地智門；",
        "from": "T18n0888_001:0538b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中我見若不生，　　不稱吽字為警覺。",
        "from": "T18n0888_001:0538b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不假身業有所作，　　布壇結印造塔像；",
        "from": "T18n0888_001:0538b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不假語業持呪明，　　及讀誦法亦應捨；",
        "from": "T18n0888_001:0538b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不於心業有動想，　　輕易尊重等無差；",
        "from": "T18n0888_001:0538b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三業得相應，　　求佛菩提此為要。",
        "from": "T18n0888_001:0538b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺盜染妄四種法，　　於中勿起防護心，",
        "from": "T18n0888_001:0538b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起遮防分別生，　　應知即染常清淨。",
        "from": "T18n0888_001:0538b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定中作護摩事，　　及諸所作無異想；",
        "from": "T18n0888_001:0538b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身語心密本相應，　　此即最上廣大行。",
        "from": "T18n0888_001:0538b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲成就諸明句，　　及一切處欲相應；",
        "from": "T18n0888_001:0538b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當專注起一心，　　觀想一切佛法性。",
        "from": "T18n0888_001:0538b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有十八不共法，　　此即名為諸佛法；",
        "from": "T18n0888_001:0538b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於中常起觀想心，　　諸佛菩提得成就。",
        "from": "T18n0888_001:0538b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四禪四定滅盡定，　　如是諸定皆獲得；",
        "from": "T18n0888_001:0538b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中常離有得心，　　而佛菩提方成就。",
        "from": "T18n0888_001:0538b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有菩薩法門中，　　彼三十七菩提分，",
        "from": "T18n0888_001:0538b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中觀想若清淨，　　能為世間作利益。",
        "from": "T18n0888_001:0538b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間所有變化心，　　觀想真實而不動；",
        "from": "T18n0888_001:0538b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼從空性所出生，　　此即名為金剛智。",
        "from": "T18n0888_001:0538b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復從法無我出生，　　無二真實最上智；",
        "from": "T18n0888_001:0538c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而最上智即法性，　　此即名為大法界。",
        "from": "T18n0888_001:0538c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知法界自性者，　　即金剛智所成心；",
        "from": "T18n0888_001:0538c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛喻定所出生，　　此即名為金剛界。",
        "from": "T18n0888_001:0538c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最初微妙智相應，　　此相應心極廣大；",
        "from": "T18n0888_001:0538c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來種智生，　　此即毘盧遮那佛！",
        "from": "T18n0888_001:0538c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行行者最上門，　　慈相應行極廣大；",
        "from": "T18n0888_001:0538c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無漏真實不動心，　　此即名為阿閦佛！",
        "from": "T18n0888_001:0538c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨攝眾生善施作，　　悲相應行極廣大；",
        "from": "T18n0888_001:0538c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益眾生和合心，　　此即名為寶生佛！",
        "from": "T18n0888_001:0538c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上大乘離垢染，　　喜相應行極廣大；",
        "from": "T18n0888_001:0538c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨光明瑩徹心，　　此即名為無量壽！",
        "from": "T18n0888_001:0538c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺了一切眾生類，　　善捨心中極廣大；",
        "from": "T18n0888_001:0538c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空無上妙用心，　　此即不空成就佛！",
        "from": "T18n0888_001:0538c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上菩提三昧法，　　是法名為金剛智；",
        "from": "T18n0888_001:0538c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從金剛智所出生，　　此即金剛勇菩薩！",
        "from": "T18n0888_001:0538c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善以最上金剛鉤，　　普能鉤召一切佛；",
        "from": "T18n0888_001:0538c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切金剛部中王，　　此即金剛王菩薩！",
        "from": "T18n0888_001:0538c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善以最上敬愛法，　　普能敬愛一切佛；",
        "from": "T18n0888_001:0538c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大愛心亦不捨魔，　　此即金剛愛菩薩！",
        "from": "T18n0888_001:0538c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛悉歡喜，　　稱讚善哉善所作；",
        "from": "T18n0888_001:0538c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得彼諸佛歡喜已，　　此即金剛善菩薩！",
        "from": "T18n0888_001:0538c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空無礙大珍寶，　　出生是寶等虛空；",
        "from": "T18n0888_001:0538c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普施諸佛及眾聖，　　此即金剛寶菩薩！",
        "from": "T18n0888_001:0538c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智離無明故清淨，　　諸行無著亦復然；",
        "from": "T18n0888_001:0538c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫光明大光照，　　此即金剛光菩薩！",
        "from": "T18n0888_001:0538c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於解脫道如實證，　　得一切相所成智；",
        "from": "T18n0888_001:0538c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以正法幢為大幢，　　此即金剛幢菩薩！",
        "from": "T18n0888_001:0538c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩心悅出大息，　　即大相應金剛笑；",
        "from": "T18n0888_001:0538c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令一切佛歡喜，　　此即金剛笑菩薩！",
        "from": "T18n0888_001:0539a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法清淨如來性，　　悉能證悟諸佛法；",
        "from": "T18n0888_001:0539a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與諸佛大相應，　　此即金剛法菩薩！",
        "from": "T18n0888_001:0539a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘妙慧極鋒利，　　能斷一切煩惱種；",
        "from": "T18n0888_001:0539a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能破智障亦復然，　　此即金剛利菩薩！",
        "from": "T18n0888_001:0539a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大士大乘微妙因，　　隨順如來語輪轉；",
        "from": "T18n0888_001:0539a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由佛語故轉法輪，　　此即金剛因菩薩！",
        "from": "T18n0888_001:0539a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧莊嚴清淨語，　　遠離一切分別聲；",
        "from": "T18n0888_001:0539a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙音振響法相應，　　此即金剛語菩薩！",
        "from": "T18n0888_001:0539a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧莊嚴清淨業，　　隨起一切化相門；",
        "from": "T18n0888_001:0539a10_17",
        "context_with_next_sentence": true
    },
    {
