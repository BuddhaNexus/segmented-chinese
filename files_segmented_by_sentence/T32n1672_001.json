[
    {
        "source_sentence": "龍樹菩薩為禪陀迦王說法要偈",
        "from": "T32n1672_001:0745b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋罽賓三藏求那跋摩譯",
        "from": "T32n1672_001:0745b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪陀迦王應當知，　　生死苦惱多眾過，",
        "from": "T32n1672_001:0745b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉為無明所覆障，　　吾欲為彼興利益。",
        "from": "T32n1672_001:0745b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如刻畫造佛像，　　智者見之宜恭敬，",
        "from": "T32n1672_001:0745b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依如來說正法，　　大王亦應深信受。",
        "from": "T32n1672_001:0745b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝雖先聞牟尼言，　　今若聽受轉分別，",
        "from": "T32n1672_001:0745b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如華池色清淨，　　月光垂照踰暉顯。",
        "from": "T32n1672_001:0745b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說六念當修習，　　所謂三寶施戒天，",
        "from": "T32n1672_001:0745b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行十善淨三業，　　離酒放逸及邪命。",
        "from": "T32n1672_001:0745b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀身命財速危朽，　　應施福田濟窮乏，",
        "from": "T32n1672_001:0745b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施為堅牢無與等，　　最為第一親近者。",
        "from": "T32n1672_001:0745b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修淨戒除瑕穢，　　亦莫悕求願諸有，",
        "from": "T32n1672_001:0745b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如大地殖眾物，　　戒亦如是生諸善。",
        "from": "T32n1672_001:0745b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修忍柔和捨瞋恚，　　佛說是行最無上，",
        "from": "T32n1672_001:0745b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是精進及禪智，　　具此六行超生死。",
        "from": "T32n1672_001:0745b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能在家孝父母，　　此即名為勝福田，",
        "from": "T32n1672_001:0745b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世流布大名稱，　　未來福報轉無量。",
        "from": "T32n1672_001:0745c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺盜婬欺耽荒酒，　　雕床高廣及香熏，",
        "from": "T32n1672_001:0745c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謳歌倡伎過時食，　　如斯眾惡宜遠離，",
        "from": "T32n1672_001:0745c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若少時間修此戒，　　必受天樂昇涅槃。",
        "from": "T32n1672_001:0745c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳嫉貪欲及諂偽，　　誑惑顛倒與懈怠，",
        "from": "T32n1672_001:0745c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此眾惡不善法，　　大王當觀速棄捨。",
        "from": "T32n1672_001:0745c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端正尊豪及五欲，　　當知危朽若泡沫，",
        "from": "T32n1672_001:0745c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫恃若斯不堅法，　　憍逸自恣生諸苦，",
        "from": "T32n1672_001:0745c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲長諸善證甘露，　　應當遠離如棄毒。",
        "from": "T32n1672_001:0745c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能精勤捨瞋慢，　　譬如除雲顯秋月，",
        "from": "T32n1672_001:0745c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如指鬘與難陀，　　亦如差摩賢聖等。",
        "from": "T32n1672_001:0745c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來說有三種語，　　入意真實虛妄言，",
        "from": "T32n1672_001:0745c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入意如花實猶蜜，　　虛妄鄙惡若糞穢，",
        "from": "T32n1672_001:0745c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當修習前二言，　　速宜除斷虛妄者。",
        "from": "T32n1672_001:0745c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從明入明四種法，　　王當分別諦思惟，",
        "from": "T32n1672_001:0745c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二種入明是應修，　　若就癡冥當速捨。",
        "from": "T32n1672_001:0745c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菴婆羅果四種變，　　人難分別亦如是，",
        "from": "T32n1672_001:0745c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以智慧深觀察，　　若實賢善宜親近。",
        "from": "T32n1672_001:0745c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖見女人極端嚴，　　當作己母姊女想，",
        "from": "T32n1672_001:0745c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設起貪欲染愛心，　　應當正修不淨觀。",
        "from": "T32n1672_001:0745c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心躁動宜禁制，　　如防身命及珍寶，",
        "from": "T32n1672_001:0745c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲心若起應驚怖，　　猶畏刀劍惡獸等。",
        "from": "T32n1672_001:0745c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲為無利如怨毒，　　如此之言牟尼說，",
        "from": "T32n1672_001:0745c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死輪迴過獄縛，　　應當勤修求解脫。",
        "from": "T32n1672_001:0745c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六入躁動馳諸境，　　應當攝持莫放逸，",
        "from": "T32n1672_001:0745c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如是攝諸根，　　勝於勇將摧強敵。",
        "from": "T32n1672_001:0745c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是身不淨九孔流，　　無有窮已若河海，",
        "from": "T32n1672_001:0745c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薄皮覆蔽似清淨，　　猶假瓔珞自莊嚴，",
        "from": "T32n1672_001:0745c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有智人乃分別，　　知其虛誑便棄捨。",
        "from": "T32n1672_001:0745c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如疥者近猛焰，　　初雖暫悅後增苦，",
        "from": "T32n1672_001:0746a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪欲之想亦復然，　　始雖樂著終多患。",
        "from": "T32n1672_001:0746a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見身實相皆不淨，　　即是觀於空無我，",
        "from": "T32n1672_001:0746a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能修習斯觀者，　　於利益中最無上。",
        "from": "T32n1672_001:0746a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有色族及多聞，　　若無戒智猶禽獸，",
        "from": "T32n1672_001:0746a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖處醜賤少聞見，　　能修戒智名勝士，",
        "from": "T32n1672_001:0746a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利衰八法莫能免，　　若有除斷真無匹。",
        "from": "T32n1672_001:0746a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有沙門婆羅門，　　父母妻子及眷屬，",
        "from": "T32n1672_001:0746a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫為彼意受其言，　　廣造不善非法行，",
        "from": "T32n1672_001:0746a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設為此等起諸過，　　未來大苦唯身受。",
        "from": "T32n1672_001:0746a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫造眾惡不即報，　　非如刀劍交傷割，",
        "from": "T32n1672_001:0746a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨終罪相始俱現，　　後入地獄嬰諸苦。",
        "from": "T32n1672_001:0746a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信戒施聞慧慚愧，　　如是七法名聖財，",
        "from": "T32n1672_001:0746a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實無比牟尼說，　　超越世間眾珍寶，",
        "from": "T32n1672_001:0746a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王若集此勝財，　　不久亦證道場果。",
        "from": "T32n1672_001:0746a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "博弈飲酣好琴瑟，　　懈怠憍逸及惡友，",
        "from": "T32n1672_001:0746a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非時輕躁多動亂，　　如斯七法當遠離。",
        "from": "T32n1672_001:0746a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知足第一勝諸財，　　如此之言世尊說，",
        "from": "T32n1672_001:0746a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知足雖貧可名富，　　有財多欲是名貧，",
        "from": "T32n1672_001:0746a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若豐財業增諸苦，　　如龍多首益酸毒。",
        "from": "T32n1672_001:0746a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀美味如毒藥，　　以智慧水灑令淨，",
        "from": "T32n1672_001:0746a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為存此身雖應食，　　勿貪色味長憍慢，",
        "from": "T32n1672_001:0746a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸欲染當生厭，　　勤求無上涅槃道。",
        "from": "T32n1672_001:0746a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調和此身令安隱，　　然後宜應修齋戒，",
        "from": "T32n1672_001:0746a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一夜分別有五時，　　於二時中當眠息，",
        "from": "T32n1672_001:0746a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中後夜觀生死，　　宜勤求度勿空過。",
        "from": "T32n1672_001:0746a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四無量定當修習，　　是名開於梵天道，",
        "from": "T32n1672_001:0746a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若專繫念四禪心，　　命終必生彼天處。",
        "from": "T32n1672_001:0746a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有為遷動皆無常，　　苦空敗壞不堅固，",
        "from": "T32n1672_001:0746a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無我無樂不清淨，　　如是悉名對治法。",
        "from": "T32n1672_001:0746b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有深觀此法門，　　未來常處尊豪位，",
        "from": "T32n1672_001:0746b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行五戒斷五邪，　　是亦大王所應念。",
        "from": "T32n1672_001:0746b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如少鹽置恒河，　　不能令水有醎味，",
        "from": "T32n1672_001:0746b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微細之惡遇眾善，　　消滅散壞亦如是。",
        "from": "T32n1672_001:0746b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五邪若增劫功德，　　王當除滅令莫長，",
        "from": "T32n1672_001:0746b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信等五根眾善源，　　是宜修習令增盛，",
        "from": "T32n1672_001:0746b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生等八苦常熾燃，　　當持慧水灑令滅。",
        "from": "T32n1672_001:0746b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求天樂及涅槃，　　應勤修習正知見，",
        "from": "T32n1672_001:0746b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有利智入邪道，　　微妙功德永無餘。",
        "from": "T32n1672_001:0746b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種顛倒害諸善，　　是故當觀莫令生，",
        "from": "T32n1672_001:0746b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂色非我我非色，　　我中無色色無我，",
        "from": "T32n1672_001:0746b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於色生此四種心，　　自餘諸陰皆如是，",
        "from": "T32n1672_001:0746b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是二十心名顛倒，　　若能除斷為最上。",
        "from": "T32n1672_001:0746b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法不自起冥初生，　　非自在作及時有，",
        "from": "T32n1672_001:0746b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆從無明愛業起，　　若無因緣便斷壞。",
        "from": "T32n1672_001:0746b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王既知此等因，　　當燃慧燈破癡闇，",
        "from": "T32n1672_001:0746b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身見戒取及疑結，　　此三能障無漏道。",
        "from": "T32n1672_001:0746b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王若毀壞令散滅，　　聖解脫法當現顯，",
        "from": "T32n1672_001:0746b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如盲人問水相，　　百千萬劫莫能了，",
        "from": "T32n1672_001:0746b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求涅槃亦如是，　　唯自精勤後方證。",
        "from": "T32n1672_001:0746b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲假眷屬及知識，　　而得之者甚難有，",
        "from": "T32n1672_001:0746b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故大王當精進，　　然後乃可證寂滅。",
        "from": "T32n1672_001:0746b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施戒多聞及禪定，　　因是漸近四真諦，",
        "from": "T32n1672_001:0746b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人主故應修慧明，　　行斯三法求解脫，",
        "from": "T32n1672_001:0746b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能修此最上乘，　　則攝諸餘一切善。",
        "from": "T32n1672_001:0746b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王當觀身念法，　　世尊說為清淨道，",
        "from": "T32n1672_001:0746b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無此念增惡覺，　　是故宜應勤修習。",
        "from": "T32n1672_001:0746b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人命短促不久留，　　如水上泡起尋滅，",
        "from": "T32n1672_001:0746b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出息入息眠睡間，　　念念恒謝常衰滅，",
        "from": "T32n1672_001:0746c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久便當見磨滅，　　皮肉臭爛甚可惡，",
        "from": "T32n1672_001:0746c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青瘀脹壞膿血流，　　虫蛆唼食至枯竭，",
        "from": "T32n1672_001:0746c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮毛爪齒各分散，　　風吹日曝漸乾盡。",
        "from": "T32n1672_001:0746c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此身不堅牢，　　無量眾苦所積聚，",
        "from": "T32n1672_001:0746c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故賢聖諸智人，　　皆觀斯過咸棄捨。",
        "from": "T32n1672_001:0746c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌巨海及江河，　　七日並照皆融竭，",
        "from": "T32n1672_001:0746c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此堅固尚摧毀，　　況復若斯危脆身。",
        "from": "T32n1672_001:0746c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常既至無救護，　　不可恃怙及追求，",
        "from": "T32n1672_001:0746c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故大王常諦觀，　　速生厭離求勝法。",
        "from": "T32n1672_001:0746c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人身難得法難聞，　　猶如盲龜遇浮孔，",
        "from": "T32n1672_001:0746c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既獲若斯希有身，　　宜應勤心聽正法；",
        "from": "T32n1672_001:0746c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得此妙身造諸惡，　　譬如寶器盛眾毒。",
        "from": "T32n1672_001:0746c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生處中國遇善友，　　專念發心起正願，",
        "from": "T32n1672_001:0746c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久殖功德具諸根，　　王今滿足此眾善。",
        "from": "T32n1672_001:0746c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復親近見知人，　　佛說此為淨梵行，",
        "from": "T32n1672_001:0746c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故應當樂隨順，　　諸佛由此證涅槃。",
        "from": "T32n1672_001:0746c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既遇微妙清淨法，　　應當志求離欲道，",
        "from": "T32n1672_001:0746c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死嶮難苦無量，　　窮劫宣說莫能盡，",
        "from": "T32n1672_001:0746c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為王略分別，　　應當諦聽善思惟。",
        "from": "T32n1672_001:0746c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界轉變無輪際，　　父母妻子更相因，",
        "from": "T32n1672_001:0746c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨親憎愛無常處，　　如旋火輪豈窮已。",
        "from": "T32n1672_001:0746c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始生死世界來，　　計飲母乳多大海，",
        "from": "T32n1672_001:0746c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不精勤證空智，　　將來復飲無窮限。",
        "from": "T32n1672_001:0746c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周流五道經人天，　　若積身骨高須彌，",
        "from": "T32n1672_001:0746c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛別哀悲計其淚，　　亦非江河所能匹，",
        "from": "T32n1672_001:0746c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若計一人父母者，　　過於世間草木數。",
        "from": "T32n1672_001:0746c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖受五欲天上樂，　　終還墜沒惡趣苦，",
        "from": "T32n1672_001:0746c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天壽命極長遠，　　其間娛樂難宣說，",
        "from": "T32n1672_001:0746c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歌謳倡舞流妙聲，　　哀音和雅甚清遠，",
        "from": "T32n1672_001:0747a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇姿妙色極端嚴，　　圍遶侍衛相娛樂，",
        "from": "T32n1672_001:0747a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百味盛饌皆具足，　　隨意所翫自然至，",
        "from": "T32n1672_001:0747a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶池香淨水恒滿，　　周匝羅覆諸妙花，",
        "from": "T32n1672_001:0747a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾鳥異色集其上，　　哀聲相和出遠音，",
        "from": "T32n1672_001:0747a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天遊戲浴其內，　　如是歡娛不可說。",
        "from": "T32n1672_001:0747a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福盡臨終五衰現，　　爾時生苦踰前樂，",
        "from": "T32n1672_001:0747a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故雖有天女娛，　　智者見之已生厭。",
        "from": "T32n1672_001:0747a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖居珍寶上樓觀，　　亦必退墮臭穢處，",
        "from": "T32n1672_001:0747a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖遊天上難陀園，　　會亦還入刀劍林，",
        "from": "T32n1672_001:0747a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖浴諸天曼陀池，　　終必墜於灰河獄，",
        "from": "T32n1672_001:0747a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖復位處轉輪帝，　　歸為僮僕被驅使，",
        "from": "T32n1672_001:0747a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖受梵天離欲娛，　　還墜無間熾然苦，",
        "from": "T32n1672_001:0747a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖居天宮具光明，　　後入地獄黑闇中。",
        "from": "T32n1672_001:0747a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂黑繩活地獄，　　燒割剝刺及無間，",
        "from": "T32n1672_001:0747a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是八地獄常熾燃，　　皆是眾生惡業報。",
        "from": "T32n1672_001:0747a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或受大苦如押油，　　或碎身體若塵粉，",
        "from": "T32n1672_001:0747a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或解支節今分散，　　或復㓟剝及燒煮，",
        "from": "T32n1672_001:0747a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以沸銅澍其口，　　或以鐵押裂其形，",
        "from": "T32n1672_001:0747a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵狗競來爭食噉，　　鐵鳥復集共齟掣，",
        "from": "T32n1672_001:0747a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾類毒虫並䶩齧，　　或燒銅柱貫其身，",
        "from": "T32n1672_001:0747a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大火猛盛俱洞燃，　　罪業緣故無逃避，",
        "from": "T32n1672_001:0747a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鑊湯騰沸至高涌，　　顛倒罪人投其內。",
        "from": "T32n1672_001:0747a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人命危朽甚迅駛，　　譬如諸天喘息頃，",
        "from": "T32n1672_001:0747a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人於此短命中，　　聞上諸苦不驚畏，",
        "from": "T32n1672_001:0747a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此心甚堅固，　　猶如金剛難摧壞。",
        "from": "T32n1672_001:0747a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見圖畫聞他言，　　或隨經書自憶念，",
        "from": "T32n1672_001:0747a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是知時已難忍，　　況復己身自經歷。",
        "from": "T32n1672_001:0747a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無間無救大地獄，　　此中諸苦難窮盡，",
        "from": "T32n1672_001:0747a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人一日中，　　以三百鉾󰱈其體，",
        "from": "T32n1672_001:0747b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比阿毘獄一念苦，　　百千萬分不及一，",
        "from": "T32n1672_001:0747b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受此大苦經一劫，　　罪業緣盡後方免。",
        "from": "T32n1672_001:0747b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是苦惱從誰生，　　皆由三業不善起，",
        "from": "T32n1672_001:0747b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王今雖無斯患，　　若不修因緣墜落。",
        "from": "T32n1672_001:0747b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於畜生中苦無量，　　或有繫縛及鞭撻，",
        "from": "T32n1672_001:0747b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有信戒多聞故，　　恒懷惡心相食噉，",
        "from": "T32n1672_001:0747b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為明珠羽角牙，　　骨毛皮肉致殘害，",
        "from": "T32n1672_001:0747b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為人乘駕不自在，　　恒受瓦石刀杖苦。",
        "from": "T32n1672_001:0747b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼道中苦亦然，　　諸所須欲不隨意，",
        "from": "T32n1672_001:0747b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢渴所逼困寒熱，　　疲乏等苦甚無量。",
        "from": "T32n1672_001:0747b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹大若山咽如針，　　屎尿膿血不可說，",
        "from": "T32n1672_001:0747b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裸形被髮甚醜惡，　　如多羅樹被燒剪，",
        "from": "T32n1672_001:0747b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其口夜則大火燃，　　諸虫爭赴共唼食，",
        "from": "T32n1672_001:0747b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屎尿糞穢諸不淨，　　百千萬劫莫能得，",
        "from": "T32n1672_001:0747b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設復推求得少分，　　更相劫奪尋散失。",
        "from": "T32n1672_001:0747b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清涼秋月患焰熱，　　溫和春日轉寒苦，",
        "from": "T32n1672_001:0747b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若趣園林眾果盡，　　設至清流變枯竭，",
        "from": "T32n1672_001:0747b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪業緣故壽長遠，　　經有一萬五千歲，",
        "from": "T32n1672_001:0747b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受眾楚毒無空缺，　　皆是餓鬼之果報，",
        "from": "T32n1672_001:0747b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正覺說斯苦惱因，　　名曰慳貪嫉妬業。",
        "from": "T32n1672_001:0747b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天福盡有餘善，　　因此得為人中王，",
        "from": "T32n1672_001:0747b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後設懈怠福都盡，　　必墜三惡無有疑。",
        "from": "T32n1672_001:0747b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生修羅起貢高，　　恚嫉貪害增諸惱，",
        "from": "T32n1672_001:0747b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天雖有善根行，　　以其慳嫉失利樂，",
        "from": "T32n1672_001:0747b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知嫉妬結，　　為深惡法宜棄捨。",
        "from": "T32n1672_001:0747b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王汝今已具知，　　生死過患多眾苦，",
        "from": "T32n1672_001:0747b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應當勤修出世善，　　如渴思飲救頭燃，",
        "from": "T32n1672_001:0747b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若加精進斷諸有，　　於諸善中最無上。",
        "from": "T32n1672_001:0747b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當勤持戒習禪智，　　調伏其心求涅槃，",
        "from": "T32n1672_001:0747c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃微妙絕諸相，　　無生老死及衰惱，",
        "from": "T32n1672_001:0747c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無山河與日月，　　是故應當速證知。",
        "from": "T32n1672_001:0747c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲證於無師智，　　應當專修七覺法，",
        "from": "T32n1672_001:0747c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有乘斯覺分船，　　生死大海易超渡。",
        "from": "T32n1672_001:0747c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛所不說十四法，　　但生信心莫疑惑，",
        "from": "T32n1672_001:0747c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯當正心勤精進，　　決定修習諸善法。",
        "from": "T32n1672_001:0747c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明緣行識名色，　　六入觸受愛取有，",
        "from": "T32n1672_001:0747c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有則緣生生緣死，　　若盡生死因緣滅，",
        "from": "T32n1672_001:0747c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是正觀十二緣，　　是人則見聖師子。",
        "from": "T32n1672_001:0747c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲次第見四諦，　　當勤修習八正道，",
        "from": "T32n1672_001:0747c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖居尊榮處五欲，　　亦得聖道斷諸結，",
        "from": "T32n1672_001:0747c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此果不可求餘人，　　必自心會乃得證。",
        "from": "T32n1672_001:0747c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說眾苦及涅槃，　　欲為潤益大王故，",
        "from": "T32n1672_001:0747c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應生於怖畏心，　　但勤誦習行諸善，",
        "from": "T32n1672_001:0747c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心為諸法之根本，　　若先調伏事斯辦。",
        "from": "T32n1672_001:0747c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說法要略分別，　　王不宜應生足心，",
        "from": "T32n1672_001:0747c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有大智更敷演，　　亦當至心勤聽受。",
        "from": "T32n1672_001:0747c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王今名為大法器，　　若廣聞法必多益，",
        "from": "T32n1672_001:0747c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見有修三業善，　　應深助生隨喜心，",
        "from": "T32n1672_001:0747c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自所行善及隨喜，　　如是功德悉迴向。",
        "from": "T32n1672_001:0747c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王當仰學諸賢聖，　　如觀音等度眾生，",
        "from": "T32n1672_001:0747c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來必當成正覺，　　國無生老三毒害。",
        "from": "T32n1672_001:0747c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王若修上諸善，　　則美名稱廣流布，",
        "from": "T32n1672_001:0747c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後以此教化人，　　普令一切成正覺。",
        "from": "T32n1672_001:0747c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱駛河㵱眾生，　　為深怖畏熾然苦，",
        "from": "T32n1672_001:0747c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲滅如是諸塵勞，　　應修真實解脫諦，",
        "from": "T32n1672_001:0747c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸世間假名法，　　則得清淨不動處。",
        "from": "T32n1672_001:0747c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有婦人懷害心，　　如此之妻宜遠離，",
        "from": "T32n1672_001:0747c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有貞和愛敬夫，　　謙卑勤業若婢使，",
        "from": "T32n1672_001:0748a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒為親友姊母想，　　此宜尊敬如宅神。",
        "from": "T32n1672_001:0748a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所說法正如是，　　王當日夜勤修行。",
        "from": "T32n1672_001:0748a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹菩薩為禪陀迦王說法要偈",
        "from": "T32n1672_001:0748a04_100",
        "context_with_next_sentence": false
    }
]