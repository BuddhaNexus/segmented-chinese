{
    "X72n1435_033:0369c10_0": "無異禪師廣錄卷第三十三",
    "X72n1435_033:0369c12_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_033:0369c13_0": "首座法孫　弘裕　同集",
    "X72n1435_033:0369c14_0": "　　文(二)",
    "X72n1435_033:0369c15_0": "奠壽昌和尚(二)",
    "X72n1435_033:0369c16_0": "某年月日。",
    "X72n1435_033:0369c16_1": "得法弟子某。",
    "X72n1435_033:0369c16_2": "謹以瓣香素饈。",
    "X72n1435_033:0369c16_3": "致奠于壽昌先師大和尚法座前。",
    "X72n1435_033:0369c17_4": "而言曰。",
    "X72n1435_033:0369c17_5": "於戲先師。",
    "X72n1435_033:0369c17_6": "身獨立于宇宙。",
    "X72n1435_033:0369c18_7": "神周遊于寰海。",
    "X72n1435_033:0369c18_8": "遊戲大火聚裏。",
    "X72n1435_033:0369c18_9": "鮫珠帶水欲生寒。",
    "X72n1435_033:0369c19_0": "出沒生死浪頭。",
    "X72n1435_033:0369c19_1": "古岸漁竿垂渡晚。",
    "X72n1435_033:0369c19_2": "住山五十餘白。",
    "X72n1435_033:0369c19_3": "大似指花破夢。",
    "X72n1435_033:0369c20_4": "應緣三處道場。",
    "X72n1435_033:0369c20_5": "渾如插草成功。",
    "X72n1435_033:0369c20_6": "推倒大好山。",
    "X72n1435_033:0369c21_7": "入興善門不動寸步。",
    "X72n1435_033:0369c21_8": "出應西竺讖。",
    "X72n1435_033:0369c21_9": "住壽昌院放出金牛。",
    "X72n1435_033:0369c22_10": "植多福竹。",
    "X72n1435_033:0369c22_11": "而勾引清風。",
    "X72n1435_033:0369c22_12": "碎黃龍關。",
    "X72n1435_033:0369c22_13": "而疏通萬里。",
    "X72n1435_033:0369c23_14": "然後布漫天網。",
    "X72n1435_033:0369c23_15": "提金剛劒。",
    "X72n1435_033:0369c23_16": "殺佛活祖。",
    "X72n1435_033:0369c23_17": "捋虎搏龍。",
    "X72n1435_033:0369c23_18": "四海衲子。",
    "X72n1435_033:0369c24_19": "聞風而至。",
    "X72n1435_033:0369c24_20": "及乎見師。",
    "X72n1435_033:0369c24_21": "如一田夫耳。",
    "X72n1435_033:0369c24_22": "往往望崖而退。",
    "X72n1435_033:0370a01_23": "竟莫窺其端倪。",
    "X72n1435_033:0370a01_24": "葢師見道甚密。",
    "X72n1435_033:0370a01_25": "行道甚力。",
    "X72n1435_033:0370a01_26": "自髫稚之年。",
    "X72n1435_033:0370a02_27": "貌骨瘁立。",
    "X72n1435_033:0370a02_28": "荷一雨具。",
    "X72n1435_033:0370a02_29": "而肩幾腫突。",
    "X72n1435_033:0370a02_30": "入山躬自作務。",
    "X72n1435_033:0370a03_31": "力田飯僧。",
    "X72n1435_033:0370a03_32": "凡鼎建梵剎大小十餘所。",
    "X72n1435_033:0370a03_33": "皆吾師一钁之功。",
    "X72n1435_033:0370a04_34": "嗚呼先師薄聲位。",
    "X72n1435_033:0370a04_35": "不干豪權。",
    "X72n1435_033:0370a04_36": "不營利養。",
    "X72n1435_033:0370a04_37": "撐持佛祖之道于頹波末流之頃。",
    "X72n1435_033:0370a05_38": "作本色道人。",
    "X72n1435_033:0370a05_39": "使洞上宗風復振于今日。",
    "X72n1435_033:0370a06_40": "斯功也。",
    "X72n1435_033:0370a06_41": "不歸重于吾師。",
    "X72n1435_033:0370a06_42": "復何歸哉。",
    "X72n1435_033:0370a06_43": "不肖某三十年前。",
    "X72n1435_033:0370a07_44": "叩籌室遭險觸鋒。",
    "X72n1435_033:0370a07_45": "至二十六年冬。",
    "X72n1435_033:0370a07_46": "方命首眾。",
    "X72n1435_033:0370a08_47": "大綱一舉。",
    "X72n1435_033:0370a08_48": "眾目齊張。",
    "X72n1435_033:0370a08_49": "持舊戒尺。",
    "X72n1435_033:0370a08_50": "于空諸有處號令人天。",
    "X72n1435_033:0370a09_51": "拈爛拄杖。",
    "X72n1435_033:0370a09_52": "向沒蹤跡邊開展門戶。",
    "X72n1435_033:0370a09_53": "橫拈竪卓。",
    "X72n1435_033:0370a10_54": "倒廩傾倉。",
    "X72n1435_033:0370a10_55": "伏藏家珍。",
    "X72n1435_033:0370a10_56": "和盤托出。",
    "X72n1435_033:0370a10_57": "嗚呼拈花微笑。",
    "X72n1435_033:0370a10_58": "剺破面門者幾人。",
    "X72n1435_033:0370a11_59": "覩影知形。",
    "X72n1435_033:0370a11_60": "揑轉鼻頭者孰是。",
    "X72n1435_033:0370a11_61": "顧不肖謬當其印。",
    "X72n1435_033:0370a12_62": "是就無用中而求有用。",
    "X72n1435_033:0370a12_63": "及師遊少林登五臺。",
    "X72n1435_033:0370a13_64": "不肖始離叢席。",
    "X72n1435_033:0370a13_65": "三經寒燠。",
    "X72n1435_033:0370a13_66": "逮師居寶方。",
    "X72n1435_033:0370a13_67": "復命首座寮秉拂。",
    "X72n1435_033:0370a14_68": "其知遇之隆。",
    "X72n1435_033:0370a14_69": "出乎常格之外。",
    "X72n1435_033:0370a14_70": "舊春二月。",
    "X72n1435_033:0370a14_71": "覲師于壽昌為師壽。",
    "X72n1435_033:0370a15_72": "甫閱朞歲。",
    "X72n1435_033:0370a15_73": "而忽訃至。",
    "X72n1435_033:0370a15_74": "嗚呼吾師生耶死耶。",
    "X72n1435_033:0370a16_75": "法幢雖折。",
    "X72n1435_033:0370a16_76": "法燈愈朗。",
    "X72n1435_033:0370a16_77": "其以生滅去來。",
    "X72n1435_033:0370a16_78": "視吾師者。",
    "X72n1435_033:0370a17_0": "不啻門外漢。",
    "X72n1435_033:0370a17_1": "詎足與語。",
    "X72n1435_033:0370a17_2": "嗚呼尚饗。",
    "X72n1435_033:0370a18_0": "慈容粹美。",
    "X72n1435_033:0370a18_1": "十年若隔宿之期。",
    "X72n1435_033:0370a18_2": "古寺輝煌。",
    "X72n1435_033:0370a18_3": "群木動遐思之色。",
    "X72n1435_033:0370a19_4": "法音宛爾。",
    "X72n1435_033:0370a19_5": "杖履蕭然。",
    "X72n1435_033:0370a19_6": "銷俗諦餘塵。",
    "X72n1435_033:0370a19_7": "豈斷懸河之辯。",
    "X72n1435_033:0370a20_8": "入常光三昧。",
    "X72n1435_033:0370a20_9": "毋辭織錦之勞。",
    "X72n1435_033:0370a20_10": "深悲脚下兒孫。",
    "X72n1435_033:0370a20_11": "誰為克肖。",
    "X72n1435_033:0370a21_12": "刮去眼中膜翳。",
    "X72n1435_033:0370a21_13": "灼有師承。",
    "X72n1435_033:0370a21_14": "點鐵成金。",
    "X72n1435_033:0370a21_15": "煅凡育聖。",
    "X72n1435_033:0370a22_0": "雪盛銀盌。",
    "X72n1435_033:0370a22_1": "露濕禪裾。",
    "X72n1435_033:0370a22_2": "銘先師格外宏慈。",
    "X72n1435_033:0370a22_3": "棒下吐驚人之句。",
    "X72n1435_033:0370a23_4": "愧不肖冶中鈍器。",
    "X72n1435_033:0370a23_5": "當陽洩正位之機。",
    "X72n1435_033:0370a23_6": "方開一線之長。",
    "X72n1435_033:0370a24_7": "遂醒千秋之夢。",
    "X72n1435_033:0370a24_8": "縱肝膽塗地。",
    "X72n1435_033:0370a24_9": "而莫報洪恩。",
    "X72n1435_033:0370a24_10": "藉山海煙雲。",
    "X72n1435_033:0370b01_11": "而敬伸薄奠。",
    "X72n1435_033:0370b02_0": "奠鵞湖和尚",
    "X72n1435_033:0370b03_0": "某年月日。",
    "X72n1435_033:0370b03_1": "弟子某。",
    "X72n1435_033:0370b03_2": "謹以素饈香燭之儀。",
    "X72n1435_033:0370b03_3": "致奠于鵞湖堂上示寂先大師養菴和尚之靈龕。",
    "X72n1435_033:0370b04_4": "而言曰。",
    "X72n1435_033:0370b04_5": "於戲先師。",
    "X72n1435_033:0370b05_6": "靈心湛寂。",
    "X72n1435_033:0370b05_7": "道性貞醇。",
    "X72n1435_033:0370b05_8": "幻化八十春秋。",
    "X72n1435_033:0370b05_9": "渾無起滅。",
    "X72n1435_033:0370b05_10": "成熟千生善聚。",
    "X72n1435_033:0370b06_11": "示有去來。",
    "X72n1435_033:0370b06_12": "梅花枝上。",
    "X72n1435_033:0370b06_13": "笑拈不夜之春。",
    "X72n1435_033:0370b06_14": "茶銚爐邊。",
    "X72n1435_033:0370b07_15": "賸得活人之句。",
    "X72n1435_033:0370b07_16": "見野燹而知起處。",
    "X72n1435_033:0370b07_17": "境量消融。",
    "X72n1435_033:0370b08_0": "封鎻鑰以驗方來。",
    "X72n1435_033:0370b08_1": "真機獨露。",
    "X72n1435_033:0370b08_2": "不起日旋三昧。",
    "X72n1435_033:0370b08_3": "大施無礙鉗鎚。",
    "X72n1435_033:0370b09_4": "悲花法雨灑人寰。",
    "X72n1435_033:0370b09_5": "慈意戒雷轟碧漢。",
    "X72n1435_033:0370b09_6": "不謂化儀告畢。",
    "X72n1435_033:0370b10_7": "緣應已週。",
    "X72n1435_033:0370b10_8": "金棺掩耀。",
    "X72n1435_033:0370b10_9": "俄驚白樹以興哀。",
    "X72n1435_033:0370b10_10": "鵞水藏珠。",
    "X72n1435_033:0370b11_11": "不覩玉毫之散彩。",
    "X72n1435_033:0370b11_12": "白雲慘乎無色。",
    "X72n1435_033:0370b11_13": "瀑布凄以斷流。",
    "X72n1435_033:0370b12_14": "頹法門之華棟。",
    "X72n1435_033:0370b12_15": "四眾何依。",
    "X72n1435_033:0370b12_16": "竭覺海之靈波。",
    "X72n1435_033:0370b12_17": "群生失潤。",
    "X72n1435_033:0370b13_18": "某等夙承洪鑄。",
    "X72n1435_033:0370b13_19": "仰戴玄猷。",
    "X72n1435_033:0370b13_20": "瞻模範以步趨。",
    "X72n1435_033:0370b13_21": "風高莫及。",
    "X72n1435_033:0370b14_22": "藉聲光而提命。",
    "X72n1435_033:0370b14_23": "恩大難詶。",
    "X72n1435_033:0370b14_24": "叨餐法乳之深。",
    "X72n1435_033:0370b14_25": "徒戀雙趺之跡。",
    "X72n1435_033:0370b15_26": "溪毛澗水。",
    "X72n1435_033:0370b15_27": "聊為最後之純陀。",
    "X72n1435_033:0370b15_28": "海月山雲。",
    "X72n1435_033:0370b15_29": "永作吾師之供養。",
    "X72n1435_033:0370b16_30": "至痛無文。",
    "X72n1435_033:0370b16_31": "真炤靡隔。",
    "X72n1435_033:0370b17_0": "祭文",
    "X72n1435_033:0370b18_0": "嗚呼哀哉。",
    "X72n1435_033:0370b18_1": "言念父兮。",
    "X72n1435_033:0370b18_2": "廓落坦夷。",
    "X72n1435_033:0370b18_3": "儼行仙之高躅。",
    "X72n1435_033:0370b18_4": "質直樸實。",
    "X72n1435_033:0370b19_5": "追懷葛之醇風。",
    "X72n1435_033:0370b19_6": "慕善道而嗜從。",
    "X72n1435_033:0370b19_7": "如漿脯之適口。",
    "X72n1435_033:0370b20_0": "猒世網而思脫。",
    "X72n1435_033:0370b20_1": "比澤雉之樊籠。",
    "X72n1435_033:0370b20_2": "視塵勞而為夢幻兮。",
    "X72n1435_033:0370b21_0": "轉成智度。",
    "X72n1435_033:0370b21_1": "借恩愛而作道緣兮。",
    "X72n1435_033:0370b21_2": "實生兒躳。",
    "X72n1435_033:0370b21_3": "早遊方外。",
    "X72n1435_033:0370b22_0": "志慕空宗。",
    "X72n1435_033:0370b22_1": "奉戒律而為孝順兮。",
    "X72n1435_033:0370b22_2": "詶劬勞之罔極。",
    "X72n1435_033:0370b22_3": "弘道法以資恩有兮。",
    "X72n1435_033:0370b23_4": "冀樂利以無窮。",
    "X72n1435_033:0370b23_5": "顧不肖雖悖德於一時。",
    "X72n1435_033:0370b24_6": "菽水違養乎雲水。",
    "X72n1435_033:0370b24_7": "賴老父終歸心於三寶。",
    "X72n1435_033:0370b24_8": "蓮胎高步乎花宮。",
    "X72n1435_033:0370c01_9": "山川秀邈兮疑復覩於再世。",
    "X72n1435_033:0370c01_10": "桑梓旋歸兮俄捐館於西風。",
    "X72n1435_033:0370c02_11": "指忽囓而心慟。",
    "X72n1435_033:0370c02_12": "音雖隔而夢通。",
    "X72n1435_033:0370c02_13": "登坵隴以瞻顧兮。",
    "X72n1435_033:0370c03_14": "澗藻陳其怵惕。",
    "X72n1435_033:0370c03_15": "攀楸檟。",
    "X72n1435_033:0370c03_16": "以雪涕兮。",
    "X72n1435_033:0370c03_17": "風木感其哀衷。",
    "X72n1435_033:0370c04_18": "願來歆於法喜兮。",
    "X72n1435_033:0370c04_19": "山雲海月聊申兒之供養。",
    "X72n1435_033:0370c05_20": "期早證於樂邦兮。",
    "X72n1435_033:0370c05_21": "水鳥林樹皆演佛之圓通。",
    "X72n1435_033:0370c05_22": "惟靈不昧。",
    "X72n1435_033:0370c06_23": "鑒此哀悰。",
    "X72n1435_033:0370c07_0": "祭萬融上座",
    "X72n1435_033:0370c08_0": "仁者發心尋師。",
    "X72n1435_033:0370c08_1": "浙水吳山。",
    "X72n1435_033:0370c08_2": "往返年餘。",
    "X72n1435_033:0370c08_3": "遍參哲匠。",
    "X72n1435_033:0370c08_4": "無有可其意者。",
    "X72n1435_033:0370c09_5": "己亥與余邂逅。",
    "X72n1435_033:0370c09_6": "鵞湖峯頂。",
    "X72n1435_033:0370c09_7": "一言相契。",
    "X72n1435_033:0370c09_8": "若針鋒投于芥子。",
    "X72n1435_033:0370c10_9": "如飴如蜜。",
    "X72n1435_033:0370c10_10": "似蓮花開于夜分。",
    "X72n1435_033:0370c10_11": "愈湛愈鮮。",
    "X72n1435_033:0370c11_0": "相別二載。",
    "X72n1435_033:0370c11_1": "仁者腰包抵閩。",
    "X72n1435_033:0370c11_2": "復會予于武夷虎嘯崖。",
    "X72n1435_033:0370c11_3": "同出嶺。",
    "X72n1435_033:0370c12_4": "住西巖祖印及博山。",
    "X72n1435_033:0370c12_5": "三寒暑。",
    "X72n1435_033:0370c12_6": "始分居衢之招慶。",
    "X72n1435_033:0370c13_0": "應檀越廉憲詹公請。",
    "X72n1435_033:0370c13_1": "嗚呼隙駒易流。",
    "X72n1435_033:0370c13_2": "倐忽間一十七載。",
    "X72n1435_033:0370c14_3": "余召仁者歸。",
    "X72n1435_033:0370c14_4": "仁者無時不願歸。",
    "X72n1435_033:0370c14_5": "甲子二月十八日。",
    "X72n1435_033:0370c15_0": "聞仁者棄我而先仆。",
    "X72n1435_033:0370c15_1": "寧不痛哉。",
    "X72n1435_033:0370c15_2": "嗚呼仁者。",
    "X72n1435_033:0370c15_3": "心何心耶。",
    "X72n1435_033:0370c16_0": "行可行耶。",
    "X72n1435_033:0370c16_1": "惜悲智有餘。",
    "X72n1435_033:0370c16_2": "而世緣未了。",
    "X72n1435_033:0370c16_3": "而今而後。",
    "X72n1435_033:0370c16_4": "不復與仁者論玄言談世諦。",
    "X72n1435_033:0370c17_5": "略以數語記其歲月。",
    "X72n1435_033:0370c17_6": "為再世緣。",
    "X72n1435_033:0370c18_7": "偈曰。",
    "X72n1435_033:0370c18_8": "浮生虗幻。",
    "X72n1435_033:0370c18_9": "縱壽百年。",
    "X72n1435_033:0370c18_10": "電光石火。",
    "X72n1435_033:0370c18_11": "孰為後先。",
    "X72n1435_033:0370c18_12": "汝達斯理。",
    "X72n1435_033:0370c19_13": "棄余長往。",
    "X72n1435_033:0370c19_14": "一非云隻。",
    "X72n1435_033:0370c19_15": "二不成兩。",
    "X72n1435_033:0370c19_16": "人見汝死。",
    "X72n1435_033:0370c19_17": "我知汝心。",
    "X72n1435_033:0370c20_18": "慧光渾全。",
    "X72n1435_033:0370c20_19": "不向外尋。",
    "X72n1435_033:0370c20_20": "十有七年。",
    "X72n1435_033:0370c20_21": "宛如夢幻。",
    "X72n1435_033:0370c20_22": "行美機緣。",
    "X72n1435_033:0370c21_23": "可謂通貫。",
    "X72n1435_033:0370c21_24": "今日實際。",
    "X72n1435_033:0370c21_25": "山濤海雲。",
    "X72n1435_033:0370c21_26": "松聲鳥韻。",
    "X72n1435_033:0370c21_27": "觸目皆真。",
    "X72n1435_033:0370c22_28": "建窣堵波。",
    "X72n1435_033:0370c22_29": "藏諸所有。",
    "X72n1435_033:0370c22_30": "天覆地載。",
    "X72n1435_033:0370c22_31": "傳之不朽。",
    "X72n1435_033:0370c22_32": "我以法供。",
    "X72n1435_033:0370c23_33": "密示汝前。",
    "X72n1435_033:0370c23_34": "汝其領會。",
    "X72n1435_033:0370c23_35": "密在汝邊。",
    "X72n1435_033:0370c24_0": "祭趙湛虗居士",
    "X72n1435_033:0371a01_0": "靈木潛輝。",
    "X72n1435_033:0371a01_1": "樹變兢河之色。",
    "X72n1435_033:0371a01_2": "真光掩曜。",
    "X72n1435_033:0371a01_3": "僧含閩嶺之悲。",
    "X72n1435_033:0371a02_0": "設素供攄竭己躬。",
    "X72n1435_033:0371a02_1": "雖輸誠辭難盡意。",
    "X72n1435_033:0371a02_2": "勘破人間大夢。",
    "X72n1435_033:0371a03_0": "帶來劫外靈明。",
    "X72n1435_033:0371a03_1": "伏枕多金粟不二之談。",
    "X72n1435_033:0371a03_2": "理圓辭妙。",
    "X72n1435_033:0371a03_3": "披緇效馮公再生之願。",
    "X72n1435_033:0371a04_4": "事實果彰。",
    "X72n1435_033:0371a04_5": "諄諄戒酒囑嗣君。",
    "X72n1435_033:0371a04_6": "念念脩行策道友。",
    "X72n1435_033:0371a05_7": "示病纔于七日。",
    "X72n1435_033:0371a05_8": "快活何止千言。",
    "X72n1435_033:0371a05_9": "開頤含笑。",
    "X72n1435_033:0371a06_10": "而無墮容。",
    "X72n1435_033:0371a06_11": "煗頂聖生。",
    "X72n1435_033:0371a06_12": "且有明驗。",
    "X72n1435_033:0371a06_13": "心莫守而頓超諸有。",
    "X72n1435_033:0371a07_14": "言不盡而畢理眾心。",
    "X72n1435_033:0371a07_15": "幻化七十三年。",
    "X72n1435_033:0371a07_16": "齋戒三十九載。",
    "X72n1435_033:0371a08_17": "拂衣善逝。",
    "X72n1435_033:0371a08_18": "拍掌歸家。",
    "X72n1435_033:0371a08_19": "別眾若赴請之期。",
    "X72n1435_033:0371a08_20": "肅容如再生之日。",
    "X72n1435_033:0371a09_21": "片言隻字。",
    "X72n1435_033:0371a09_22": "難盡鄙懷。",
    "X72n1435_033:0371a09_23": "澗水山花。",
    "X72n1435_033:0371a09_24": "聊伸薄薦。",
    "X72n1435_033:0371a10_0": "疏",
    "X72n1435_033:0371a11_0": "廣福菴化藏經疏",
    "X72n1435_033:0371a12_0": "箇中不立元字脚。",
    "X72n1435_033:0371a12_1": "一大藏教向甚麼處得來。",
    "X72n1435_033:0371a12_2": "隨方建立總持門。",
    "X72n1435_033:0371a13_3": "七百函經從自心中流出。",
    "X72n1435_033:0371a13_4": "覩明星而悟道。",
    "X72n1435_033:0371a14_0": "瞿曇之鼻孔頓開。",
    "X72n1435_033:0371a14_1": "拈莖草以投機。",
    "X72n1435_033:0371a14_2": "帝釋之面門剺破。",
    "X72n1435_033:0371a15_0": "一片白雲瀰漫。",
    "X72n1435_033:0371a15_1": "幾多歸鳥迷蹤。",
    "X72n1435_033:0371a15_2": "山河大地作琴聲。",
    "X72n1435_033:0371a15_3": "到處花飛蝶舞。",
    "X72n1435_033:0371a16_4": "水鳥樹林談實相。",
    "X72n1435_033:0371a16_5": "何須鳥跡蟲文。",
    "X72n1435_033:0371a16_6": "得魚兔方捨於筌[(ㄇ@(企止))/弟]。",
    "X72n1435_033:0371a17_7": "盈倉儲始忘乎田地。",
    "X72n1435_033:0371a17_8": "剜千燈而供養。",
    "X72n1435_033:0371a18_0": "信知大法難逢。",
    "X72n1435_033:0371a18_1": "捨四大以詶心。",
    "X72n1435_033:0371a18_2": "祇為恩歸有在。",
    "X72n1435_033:0371a18_3": "周廉溪發弘誓以相資。",
    "X72n1435_033:0371a19_4": "眾居士乞片言而為引。",
    "X72n1435_033:0371a19_5": "續佛慧命。",
    "X72n1435_033:0371a20_0": "而壽命無疆。",
    "X72n1435_033:0371a20_1": "勞己色身。",
    "X72n1435_033:0371a20_2": "而法身始顯。",
    "X72n1435_033:0371a20_3": "佛緣克就。",
    "X72n1435_033:0371a20_4": "世道遐昌。",
    "X72n1435_033:0371a22_0": "覺慧寺化藏經疏",
    "X72n1435_033:0371a23_0": "法幢高竪。",
    "X72n1435_033:0371a23_1": "人天之白業熏成。",
    "X72n1435_033:0371a23_2": "寶藏遙頒。",
    "X72n1435_033:0371a23_3": "緇素之玄風始著。",
    "X72n1435_033:0371a24_4": "捨金輪而談真諦。",
    "X72n1435_033:0371a24_5": "拴回帶雨泥牛。",
    "X72n1435_033:0371a24_6": "剜赤肉以博真詮。",
    "X72n1435_033:0371b01_7": "倒跨嘶風木馬。",
    "X72n1435_033:0371b01_8": "普眼雲興二百問。",
    "X72n1435_033:0371b01_9": "人人衣縫綻開。",
    "X72n1435_033:0371b02_10": "普賢瓶瀉二千詶。",
    "X72n1435_033:0371b02_11": "箇箇鉢囊盛滿。",
    "X72n1435_033:0371b02_12": "抉驪龍之至寶。",
    "X72n1435_033:0371b03_0": "須探覺慧奇蹤。",
    "X72n1435_033:0371b03_1": "踵伏龍之芳塵。",
    "X72n1435_033:0371b03_2": "要入普聞玄徑。",
    "X72n1435_033:0371b03_3": "天垂寶葢。",
    "X72n1435_033:0371b04_4": "千餘年之靈運重來。",
    "X72n1435_033:0371b04_5": "地界金繩。",
    "X72n1435_033:0371b04_6": "四大海之真源復湧。",
    "X72n1435_033:0371b05_7": "打開瞿曇寶藏。",
    "X72n1435_033:0371b05_8": "大家乞我一文。",
    "X72n1435_033:0371b05_9": "竪起慈氏層樓。",
    "X72n1435_033:0371b06_0": "普願同拈片瓦。",
    "X72n1435_033:0371b06_1": "緣生之實相有據。",
    "X72n1435_033:0371b06_2": "誰申較量之功。",
    "X72n1435_033:0371b06_3": "性地之靈苗再生。",
    "X72n1435_033:0371b07_4": "好下有情之種。",
    "X72n1435_033:0371b08_0": "峯頂和尚壽墖疏",
    "X72n1435_033:0371b09_0": "淨白無依。",
    "X72n1435_033:0371b09_1": "平地湧七層之墖。",
    "X72n1435_033:0371b09_2": "妙嚴非相。",
    "X72n1435_033:0371b09_3": "靈光通一線之天。",
    "X72n1435_033:0371b10_4": "破大夢於紅芍藥邊。",
    "X72n1435_033:0371b10_5": "一文二文三文憑渠料揀。",
    "X72n1435_033:0371b11_0": "顯圓機於碧梧桐裏。",
    "X72n1435_033:0371b11_1": "千座萬座億座散滿閻浮。",
    "X72n1435_033:0371b11_2": "本無一切之身。",
    "X72n1435_033:0371b12_3": "法輪轉於塵界。",
    "X72n1435_033:0371b12_4": "竟分一切之墖。",
    "X72n1435_033:0371b12_5": "眷屬等於河沙。",
    "X72n1435_033:0371b13_6": "是以隨緣即應。",
    "X72n1435_033:0371b13_7": "應本無生。",
    "X72n1435_033:0371b13_8": "非思量分別之所能及也。",
    "X72n1435_033:0371b14_9": "我大和尚。",
    "X72n1435_033:0371b14_10": "托質斯時。",
    "X72n1435_033:0371b14_11": "全該大法。",
    "X72n1435_033:0371b14_12": "順機動善。",
    "X72n1435_033:0371b14_13": "慶無不宜。",
    "X72n1435_033:0371b15_14": "誰云有去來。",
    "X72n1435_033:0371b15_15": "拍破木人之掌。",
    "X72n1435_033:0371b15_16": "渠本非國土。",
    "X72n1435_033:0371b15_17": "展開石女之眉。",
    "X72n1435_033:0371b16_18": "釋迦文揭露於當時。",
    "X72n1435_033:0371b16_19": "倒跨泥牛迎曉霧。",
    "X72n1435_033:0371b16_20": "阿育王覆藏於此際。",
    "X72n1435_033:0371b17_21": "賸搖鐵鐸振春雲。",
    "X72n1435_033:0371b17_22": "紅光爍破地皮。",
    "X72n1435_033:0371b18_0": "白浪點開巨眼。",
    "X72n1435_033:0371b18_1": "雖則規模畫一。",
    "X72n1435_033:0371b18_2": "料理在我兒孫。",
    "X72n1435_033:0371b18_3": "笑看窣堵千層。",
    "X72n1435_033:0371b19_4": "葢載還他宇宙。",
    "X72n1435_033:0371b19_5": "稽首昆季。",
    "X72n1435_033:0371b19_6": "同樹厥功。",
    "X72n1435_033:0371b20_0": "護生社募緣疏",
    "X72n1435_033:0371b21_0": "真心彌亘。",
    "X72n1435_033:0371b21_1": "寧有六道之殊形。",
    "X72n1435_033:0371b21_2": "妄念隨緣。",
    "X72n1435_033:0371b21_3": "遂感多生之異質。",
    "X72n1435_033:0371b22_4": "如來大光明藏。",
    "X72n1435_033:0371b22_5": "是眾生淨覺之本源。",
    "X72n1435_033:0371b22_6": "有情最癡暗根。",
    "X72n1435_033:0371b23_7": "含諸佛妙明之因地。",
    "X72n1435_033:0371b23_8": "雖報緣聰聰蠢蠢。",
    "X72n1435_033:0371b23_9": "然覺性完完全全。",
    "X72n1435_033:0371b24_10": "蛛結網。",
    "X72n1435_033:0371b24_11": "機械可知。",
    "X72n1435_033:0371b24_12": "鵲營巢。",
    "X72n1435_033:0371b24_13": "靈心愈巧。",
    "X72n1435_033:0371b24_14": "鱔解鑽泥而隱。",
    "X72n1435_033:0371c01_15": "虱惟趨暗而奔。",
    "X72n1435_033:0371c01_16": "觀蠕動咸自貪生。",
    "X72n1435_033:0371c01_17": "雖傷殘而猶戀質。",
    "X72n1435_033:0371c02_18": "甜兒之塵。",
    "X72n1435_033:0371c02_19": "涕泣而腸斷幻囊。",
    "X72n1435_033:0371c02_20": "護子之蟲。",
    "X72n1435_033:0371c02_21": "命壞而身環舊穴。",
    "X72n1435_033:0371c03_22": "瘳乳捨將烹之鱉。",
    "X72n1435_033:0371c03_23": "投珠醫未死之蛇。",
    "X72n1435_033:0371c04_0": "何忍剝皮剔骨。",
    "X72n1435_033:0371c04_1": "活潑潑以入鑊湯。",
    "X72n1435_033:0371c04_2": "劈腹剜心。",
    "X72n1435_033:0371c04_3": "魂飄飄而驚爐炭。",
    "X72n1435_033:0371c05_4": "淚未乾而皮毛脫落。",
    "X72n1435_033:0371c05_5": "肉尚動而厨竈喧嘩。",
    "X72n1435_033:0371c06_0": "可憐頃刻下咽喉。",
    "X72n1435_033:0371c06_1": "誰識神號鬼泣。",
    "X72n1435_033:0371c06_2": "肯信無端被燒炙。",
    "X72n1435_033:0371c07_0": "須知果欠因詶。",
    "X72n1435_033:0371c07_1": "三途之業報無休。",
    "X72n1435_033:0371c07_2": "萬劫之覊縻不息。",
    "X72n1435_033:0371c08_0": "豈可恣情悖理。",
    "X72n1435_033:0371c08_1": "烹鮮擇肥。",
    "X72n1435_033:0371c08_2": "惻隱忘大聖之真慈。",
    "X72n1435_033:0371c08_3": "食噉導凡愚之惡習。",
    "X72n1435_033:0371c09_4": "無纖毫好生之念。",
    "X72n1435_033:0371c09_5": "藉口曰萬物養人。",
    "X72n1435_033:0371c10_0": "興殘慘造業之心。",
    "X72n1435_033:0371c10_1": "又豈知三途在我。",
    "X72n1435_033:0371c10_2": "不爽絲髮。",
    "X72n1435_033:0371c10_3": "如影隨形。",
    "X72n1435_033:0371c11_4": "普告達觀長者。",
    "X72n1435_033:0371c11_5": "大發慈心。",
    "X72n1435_033:0371c11_6": "効解網之仁。",
    "X72n1435_033:0371c11_7": "啟放生之會。",
    "X72n1435_033:0371c12_8": "杖頭之青蚨不惜。",
    "X72n1435_033:0371c12_9": "囊中之故鈔何慳。",
    "X72n1435_033:0371c12_10": "脫籠檻如出囹圄。",
    "X72n1435_033:0371c13_11": "好看理羽毛而愉快。",
    "X72n1435_033:0371c13_12": "免砧几如離屠肆。",
    "X72n1435_033:0371c13_13": "灼然全幻體之靈知。",
    "X72n1435_033:0371c14_14": "鼓翅空中。",
    "X72n1435_033:0371c14_15": "現黃衣而拜主。",
    "X72n1435_033:0371c14_16": "昂頭水面。",
    "X72n1435_033:0371c15_0": "旋印紐以詶恩。",
    "X72n1435_033:0371c15_1": "果報無差。",
    "X72n1435_033:0371c15_2": "循環不息。",
    "X72n1435_033:0371c15_3": "莫呵饒舌。",
    "X72n1435_033:0371c15_4": "願賜登名。",
    "X72n1435_033:0371c17_0": "阿育王寺募脩舍利殿疏",
    "X72n1435_033:0371c18_0": "靈光飛彩。",
    "X72n1435_033:0371c18_1": "閻浮分無量之身。",
    "X72n1435_033:0371c18_2": "空谷傳聲。",
    "X72n1435_033:0371c18_3": "海岸湧五層之墖。",
    "X72n1435_033:0371c19_4": "毫相瞻於七眾。",
    "X72n1435_033:0371c19_5": "隨定業以現殊形。",
    "X72n1435_033:0371c19_6": "功德佈於多生。",
    "X72n1435_033:0371c20_7": "遂塵緣而興異報。",
    "X72n1435_033:0371c20_8": "允矣法門之驗。",
    "X72n1435_033:0371c20_9": "自金棺掩曜之時。",
    "X72n1435_033:0371c21_10": "奇哉覺樹之春。",
    "X72n1435_033:0371c21_11": "亘青帝熈和之景。",
    "X72n1435_033:0371c21_12": "真身雨八斛四斗。",
    "X72n1435_033:0371c22_13": "翻塵勞業網可知。",
    "X72n1435_033:0371c22_14": "悲願造八萬四千。",
    "X72n1435_033:0371c22_15": "盡天上人間俱有。",
    "X72n1435_033:0371c23_16": "光彌覺海。",
    "X72n1435_033:0371c23_17": "秀結慈林。",
    "X72n1435_033:0371c23_18": "窣堵波終古不遷。",
    "X72n1435_033:0371c23_19": "世莊嚴緣生有壞。",
    "X72n1435_033:0371c24_20": "雲門老欲眾生之機感。",
    "X72n1435_033:0371c24_21": "就眉毛睫上樹大法幢。",
    "X72n1435_033:0372a01_22": "諸善人發自性之靈知。",
    "X72n1435_033:0372a01_23": "向香水海邊爭先佛種。",
    "X72n1435_033:0372a02_0": "喜聞地理。",
    "X72n1435_033:0372a02_1": "淨破慳囊。",
    "X72n1435_033:0372a02_2": "願賜抽毫。",
    "X72n1435_033:0372a02_3": "同圓聖智。",
    "X72n1435_033:0372a03_0": "天心寺募飯僧田疏",
    "X72n1435_033:0372a04_0": "蘭若發真乘。",
    "X72n1435_033:0372a04_1": "闤闠宛嚴佛國。",
    "X72n1435_033:0372a04_2": "涅槃無異路。",
    "X72n1435_033:0372a04_3": "市廛賸有僧園。",
    "X72n1435_033:0372a05_4": "豁心境于一如。",
    "X72n1435_033:0372a05_5": "融古今于當念。",
    "X72n1435_033:0372a05_6": "婬房酒肆。",
    "X72n1435_033:0372a05_7": "彌勒之布袋橫拖。",
    "X72n1435_033:0372a06_8": "獵隊樵羣。",
    "X72n1435_033:0372a06_9": "能祖之風幡直指。",
    "X72n1435_033:0372a06_10": "破格非關乎淺識。",
    "X72n1435_033:0372a07_11": "絲毫爽猶過蠱毒之鄉。",
    "X72n1435_033:0372a07_12": "超拔要在乎智人。",
    "X72n1435_033:0372a07_13": "道諦成似飲醍醐之味。",
    "X72n1435_033:0372a08_14": "從凡心而入聖。",
    "X72n1435_033:0372a08_15": "先嚴潔淨之壇場。",
    "X72n1435_033:0372a09_16": "擯魔眾以清修。",
    "X72n1435_033:0372a09_17": "必假資財而助發。",
    "X72n1435_033:0372a09_18": "乞檀那之雨露涓滴。",
    "X72n1435_033:0372a10_19": "幸灌于天心。",
    "X72n1435_033:0372a10_20": "種自性之菩提根株。",
    "X72n1435_033:0372a10_21": "必榮于佛地。",
    "X72n1435_033:0372a11_0": "僧田有賴。",
    "X72n1435_033:0372a11_1": "報果無差。",
    "X72n1435_033:0372a11_2": "慨賜真慈。",
    "X72n1435_033:0372a11_3": "弘恢聖域。",
    "X72n1435_033:0372a12_0": "壽言",
    "X72n1435_033:0372a13_0": "上壽昌和尚七十",
    "X72n1435_033:0372a14_0": "壽昌一片閒田地。",
    "X72n1435_033:0372a14_1": "荊棘鋤翻行樹植。",
    "X72n1435_033:0372a14_2": "玉葉金莖遍世間。",
    "X72n1435_033:0372a15_3": "祥雲五色如綺織。",
    "X72n1435_033:0372a15_4": "靄靄毫光亘十方。",
    "X72n1435_033:0372a15_5": "白乳香糜意味長。",
    "X72n1435_033:0372a16_6": "沾著唇吻生白醭。",
    "X72n1435_033:0372a16_7": "鐵額銅頭頗廝當。",
    "X72n1435_033:0372a16_8": "五十年前親蘊造。",
    "X72n1435_033:0372a17_9": "翠靄山中窮大好。",
    "X72n1435_033:0372a17_10": "自言逴著赤珊瑚。",
    "X72n1435_033:0372a17_11": "元是峨峯地上草。",
    "X72n1435_033:0372a18_12": "我曾忙向箇中親。",
    "X72n1435_033:0372a18_13": "撮摩如錦復如雲。",
    "X72n1435_033:0372a18_14": "厓柴不是閒相識。",
    "X72n1435_033:0372a19_15": "始信寒巖別有春。",
    "X72n1435_033:0372a19_16": "龍象蹴蹋環麟鳳。",
    "X72n1435_033:0372a19_17": "俊鷂天駒非釋種。",
    "X72n1435_033:0372a20_18": "後園獨羨老驢鳴。",
    "X72n1435_033:0372a20_19": "嚙草攢蹄不受控。",
    "X72n1435_033:0372a21_0": "一聲犍椎法門開。",
    "X72n1435_033:0372a21_1": "衲子如雲輻輳來。",
    "X72n1435_033:0372a21_2": "玉鎻金匙挑不出。",
    "X72n1435_033:0372a22_3": "大海須彌祇一埃。",
    "X72n1435_033:0372a22_4": "今年七十懸弧度。",
    "X72n1435_033:0372a22_5": "通衢獨踞白牛輅。",
    "X72n1435_033:0372a23_6": "招手揚聲換不回。",
    "X72n1435_033:0372a23_7": "伏藏家珍胡足數。",
    "X72n1435_033:0372a23_8": "觸處開山非聚糧。",
    "X72n1435_033:0372a24_9": "峻嶺平原盡寶方。",
    "X72n1435_033:0372a24_10": "叢林賸有金銀氣。",
    "X72n1435_033:0372a24_11": "法界惟聞優鉢香。",
    "X72n1435_033:0372b02_0": "上峯頂和尚七十",
    "X72n1435_033:0372b03_0": "鵞湖山高雲赩奕。",
    "X72n1435_033:0372b03_1": "如葢如幢金蕋色。",
    "X72n1435_033:0372b03_2": "照世明燈坐道場。",
    "X72n1435_033:0372b04_3": "一道靈光燭天北。",
    "X72n1435_033:0372b04_4": "獨步寰中意自殊。",
    "X72n1435_033:0372b04_5": "南方知識逈良模。",
    "X72n1435_033:0372b05_6": "推開辯老門前臼。",
    "X72n1435_033:0372b05_7": "奪得蘭公肘後符。",
    "X72n1435_033:0372b05_8": "梅花枝上露消息。",
    "X72n1435_033:0372b06_9": "倒跨燕都神駿逸。",
    "X72n1435_033:0372b06_10": "金鈎海底釣鯨飛。",
    "X72n1435_033:0372b06_11": "天目峯頭銀浪激。",
    "X72n1435_033:0372b07_12": "歸來占斷白雲春。",
    "X72n1435_033:0372b07_13": "飯糗羮藜絕四鄰。",
    "X72n1435_033:0372b07_14": "德比黃梅躬餉母。",
    "X72n1435_033:0372b08_15": "詩同慈覺勸尊親。",
    "X72n1435_033:0372b08_16": "天生純孝既如此。",
    "X72n1435_033:0372b08_17": "等視眾生猶一子。",
    "X72n1435_033:0372b09_18": "開堂法乳潤枯松。",
    "X72n1435_033:0372b09_19": "說戒金鱗躍芳渚。",
    "X72n1435_033:0372b10_0": "英標衲子競瞻光。",
    "X72n1435_033:0372b10_1": "三尺黑蚖鞭四方。",
    "X72n1435_033:0372b10_2": "未過黃龍關可否。",
    "X72n1435_033:0372b11_3": "先知伯樂馬驪黃。",
    "X72n1435_033:0372b11_4": "今年七十從心度。",
    "X72n1435_033:0372b11_5": "半倍趙州花甲數。",
    "X72n1435_033:0372b12_6": "使得時辰珠走盤。",
    "X72n1435_033:0372b12_7": "吞乾日月壺縣樹。",
    "X72n1435_033:0372b12_8": "眉毛似雪畵難傳。",
    "X72n1435_033:0372b13_9": "萬仞須彌聳巨川。",
    "X72n1435_033:0372b13_10": "擬同嵩少追芳躅。",
    "X72n1435_033:0372b13_11": "笑與支那較大千。",
    "X72n1435_033:0372b15_0": "壽懷白禪人",
    "X72n1435_033:0372b16_0": "襟懷清白佛家風。",
    "X72n1435_033:0372b16_1": "器界情深境象同。",
    "X72n1435_033:0372b16_2": "一帶晴嵐無限樂。",
    "X72n1435_033:0372b17_3": "彩雲斜罩妙高峯。",
    "X72n1435_033:0372b17_4": "劈破妙高峯頂色。",
    "X72n1435_033:0372b17_5": "靈源倒吸黃河竭。",
    "X72n1435_033:0372b18_6": "明暗交參互換機。",
    "X72n1435_033:0372b18_7": "分明兩口一無舌。",
    "X72n1435_033:0372b18_8": "春來都放一般花。",
    "X72n1435_033:0372b19_9": "遍界渾敷智慧芽。",
    "X72n1435_033:0372b19_10": "莫道出關行路險。",
    "X72n1435_033:0372b19_11": "嶺頭足破有玄沙。",
    "X72n1435_033:0372b20_12": "佛緣自古閩中有。",
    "X72n1435_033:0372b20_13": "明月光含獅子吼。",
    "X72n1435_033:0372b20_14": "要識靈山老比丘。",
    "X72n1435_033:0372b21_15": "也須格外翻筋斗。",
    "X72n1435_033:0372b21_16": "禪者忻逢不惑年。",
    "X72n1435_033:0372b21_17": "鼻頭懶拭俗人前。",
    "X72n1435_033:0372b22_18": "生平祇解居山好。",
    "X72n1435_033:0372b22_19": "佛法應知在钁邊。",
    "X72n1435_033:0372b23_0": "鋤頭竪起知輕重。",
    "X72n1435_033:0372b23_1": "鋤聲驚破居山夢。",
    "X72n1435_033:0372b23_2": "醒來不似舊時人。",
    "X72n1435_033:0372b24_3": "纔方舉起眉毛痛。",
    "X72n1435_033:0372b24_4": "我將此語祝長生。",
    "X72n1435_033:0372b24_5": "東土西天路坦平。",
    "X72n1435_033:0372c01_6": "佛祖場中戈不展。",
    "X72n1435_033:0372c01_7": "傳燈永載丈夫名。",
    "X72n1435_033:0372c02_0": "壽清溪居士",
    "X72n1435_033:0372c03_0": "瓶盂幾入樵陽城。",
    "X72n1435_033:0372c03_1": "入境早聞居士名。",
    "X72n1435_033:0372c03_2": "居士慧風拂人面。",
    "X72n1435_033:0372c04_3": "邂逅始舒眉上衡。",
    "X72n1435_033:0372c04_4": "我曾說與修行要。",
    "X72n1435_033:0372c04_5": "玄源不向別人討。",
    "X72n1435_033:0372c05_6": "根境門頭著眼看。",
    "X72n1435_033:0372c05_7": "衣中奪出傳家寶。",
    "X72n1435_033:0372c05_8": "慣放溈山大白牛。",
    "X72n1435_033:0372c06_9": "溪南溪北恣優遊。",
    "X72n1435_033:0372c06_10": "家常田地都耕遍。",
    "X72n1435_033:0372c06_11": "賸有煙雲一帶秋。",
    "X72n1435_033:0372c07_12": "去年七十懸弧度。",
    "X72n1435_033:0372c07_13": "海上仙來誇步武。",
    "X72n1435_033:0372c07_14": "愧我不曾預法筵。",
    "X72n1435_033:0372c08_15": "為君重說雲門普。",
    "X72n1435_033:0372c08_16": "鑿開混沌露空青。",
    "X72n1435_033:0372c08_17": "兩手慇勤握曜靈。",
    "X72n1435_033:0372c09_18": "真珠收向皮囊裏。",
    "X72n1435_033:0372c09_19": "誰道山河礙眼睛。",
    "X72n1435_033:0372c10_0": "他人賀十我賀一。",
    "X72n1435_033:0372c10_1": "我賀八十人賀七。",
    "X72n1435_033:0372c10_2": "待君百歲作長篇。",
    "X72n1435_033:0372c11_3": "再把真詮通祕密。",
    "X72n1435_033:0372c12_0": "壽東湖居士",
    "X72n1435_033:0372c13_0": "水兮流聚閻浮東。",
    "X72n1435_033:0372c13_1": "湖光蕩漾吞蒼穹。",
    "X72n1435_033:0372c13_2": "終朝雲氣騰霄漢。",
    "X72n1435_033:0372c14_3": "瑞日祥風啟太蒙。",
    "X72n1435_033:0372c14_4": "居士曩餐仙掌露。",
    "X72n1435_033:0372c14_5": "愛向禪門聽法語。",
    "X72n1435_033:0372c15_6": "皓然鬚鬢尚乾乾。",
    "X72n1435_033:0372c15_7": "夢幻身心方栩栩。",
    "X72n1435_033:0372c15_8": "一聲佛號震如雷。",
    "X72n1435_033:0372c16_9": "識境根塵當下隳。",
    "X72n1435_033:0372c16_10": "不問娑婆及淨土。",
    "X72n1435_033:0372c16_11": "何妨城市與山隈。",
    "X72n1435_033:0372c17_12": "今年八十復有一。",
    "X72n1435_033:0372c17_13": "拄杖橫挑消白日。",
    "X72n1435_033:0372c17_14": "逢人多說聚沙緣。",
    "X72n1435_033:0372c18_15": "貝葉曇花俱備悉。",
    "X72n1435_033:0372c18_16": "我為居士祝長生。",
    "X72n1435_033:0372c18_17": "雪嶺雲山路坦平。",
    "X72n1435_033:0372c19_18": "頂門突出金剛眼。",
    "X72n1435_033:0372c19_19": "萬仞巖頭撒手行。",
    "X72n1435_033:0372c20_0": "脚跟不蹋無明草。",
    "X72n1435_033:0372c20_1": "旋身始覺虗空小。",
    "X72n1435_033:0372c20_2": "無邊剎海一毫端。",
    "X72n1435_033:0372c21_3": "水底珊瑚和月皎。",
    "X72n1435_033:0372c22_0": "壽舒城芝泉孔君",
    "X72n1435_033:0372c23_0": "芝翁是我隣家伯。",
    "X72n1435_033:0372c23_1": "三十餘年彈指隔。",
    "X72n1435_033:0372c23_2": "鄉國天涯自古愁。",
    "X72n1435_033:0372c24_3": "清歡那記身為客。",
    "X72n1435_033:0372c24_4": "偶得鄉人音信通。",
    "X72n1435_033:0372c24_5": "逢人先問老年翁。",
    "X72n1435_033:0373a01_6": "曲指纔方一二過。",
    "X72n1435_033:0373a01_7": "忽然如對芝翁容。",
    "X72n1435_033:0373a01_8": "翁年八十懸弧度。",
    "X72n1435_033:0373a02_9": "德澤如春滋雨露。",
    "X72n1435_033:0373a02_10": "我本隈山旁水僧。",
    "X72n1435_033:0373a02_11": "勞書千里來相顧。",
    "X72n1435_033:0373a03_12": "讀翁書罷瑞雲開。",
    "X72n1435_033:0373a03_13": "雲裏仙人度索來。",
    "X72n1435_033:0373a03_14": "合掌殷勤乞我語。",
    "X72n1435_033:0373a04_15": "不辭鄙句為翁裁。",
    "X72n1435_033:0373a04_16": "願翁愈壽愈矍鑠。",
    "X72n1435_033:0373a04_17": "如崗如陵復如嶽。",
    "X72n1435_033:0373a05_18": "挑雲拄杖一身閒。",
    "X72n1435_033:0373a05_19": "鶴髮童顏誰可學。",
    "X72n1435_033:0373a06_0": "我卜歸期限十年。",
    "X72n1435_033:0373a06_1": "壽翁九十我居先。",
    "X72n1435_033:0373a06_2": "倘逢他事相違約。",
    "X72n1435_033:0373a07_3": "定是還翁百歲篇。",
    "X72n1435_033:0373a08_0": "壽廬山印心法師",
    "X72n1435_033:0373a09_0": "江浙從來稱法窟。",
    "X72n1435_033:0373a09_1": "象龍生具黃金骨。",
    "X72n1435_033:0373a09_2": "爛翻貝葉亂天花。",
    "X72n1435_033:0373a10_3": "閃爍毫光無自忽。",
    "X72n1435_033:0373a10_4": "凌霄巖畔古今傳。",
    "X72n1435_033:0373a10_5": "養就金毛勢力全。",
    "X72n1435_033:0373a11_6": "倒跨匡廬成底事。",
    "X72n1435_033:0373a11_7": "千尋瀑布注靈源。",
    "X72n1435_033:0373a11_8": "緣生耳順逢初度。",
    "X72n1435_033:0373a12_9": "一周甲子從頭數。",
    "X72n1435_033:0373a12_10": "微塵量盡不思議。",
    "X72n1435_033:0373a12_11": "豁爾山河無寸土。",
    "X72n1435_033:0373a13_12": "幻影漚花視此身。",
    "X72n1435_033:0373a13_13": "圓明根境不沾塵。",
    "X72n1435_033:0373a13_14": "越山吳水呈清供。",
    "X72n1435_033:0373a14_15": "永慶長生不老人。",
    "X72n1435_033:0373a15_0": "壽余文台居士",
    "X72n1435_033:0373a16_0": "三台之上紫雲旋。",
    "X72n1435_033:0373a16_1": "瑞氣祥光徹大千。",
    "X72n1435_033:0373a16_2": "露滴化城肥忍草。",
    "X72n1435_033:0373a17_3": "風生火宅綻青蓮。",
    "X72n1435_033:0373a17_4": "牛車倒跨通衢坐。",
    "X72n1435_033:0373a17_5": "塵緣眼底浮雲過。",
    "X72n1435_033:0373a18_6": "信步經行適野情。",
    "X72n1435_033:0373a18_7": "隨時粥飯稱功課。",
    "X72n1435_033:0373a18_8": "今年六十懸弧度。",
    "X72n1435_033:0373a19_9": "日用堂堂大覺路。",
    "X72n1435_033:0373a19_10": "徹骨清風透膽寒。",
    "X72n1435_033:0373a19_11": "如意明珠全體露。",
    "X72n1435_033:0373a20_12": "世念寥寥冷若灰。",
    "X72n1435_033:0373a20_13": "森羅萬象競趨陪。",
    "X72n1435_033:0373a20_14": "擡頭喜看三峯月。",
    "X72n1435_033:0373a21_15": "陰樹幽禽接翅回。",
    "X72n1435_033:0373a21_16": "美髯朱顏多笑語。",
    "X72n1435_033:0373a21_17": "煙雲斂向眉端許。",
    "X72n1435_033:0373a22_18": "不拘真俗話無生。",
    "X72n1435_033:0373a22_19": "二諦何妨顛倒舉。",
    "X72n1435_033:0373a23_0": "謾將年臘記長庚。",
    "X72n1435_033:0373a23_1": "數盡塵沙道愈明。",
    "X72n1435_033:0373a23_2": "今日與君親說破。",
    "X72n1435_033:0373a24_3": "來時古路坦然平。",
    "X72n1435_033:0373b01_0": "壽方時生居士",
    "X72n1435_033:0373b02_0": "我昔親遊桐子國。",
    "X72n1435_033:0373b02_1": "靄靄祥光多碩德。",
    "X72n1435_033:0373b02_2": "簪纓綿亘萬千秋。",
    "X72n1435_033:0373b03_3": "陰隲文章相紹克。",
    "X72n1435_033:0373b03_4": "蹤跡曾登月上菴。",
    "X72n1435_033:0373b03_5": "傳聞仍得君為檀。",
    "X72n1435_033:0373b04_6": "勇力深緣三昧樂。",
    "X72n1435_033:0373b04_7": "何妨廢寢與忘餐。",
    "X72n1435_033:0373b04_8": "今年不惑懸弧度。",
    "X72n1435_033:0373b05_9": "撥塵喜見龍眠路。",
    "X72n1435_033:0373b05_10": "龍眠路上草芊芊。",
    "X72n1435_033:0373b05_11": "寂住峯頭不記年。",
    "X72n1435_033:0373b06_12": "眼底青山多峭壁。",
    "X72n1435_033:0373b06_13": "脚跟流水盡潺湲。",
    "X72n1435_033:0373b06_14": "潺湲流水君常奏。",
    "X72n1435_033:0373b07_15": "長齡應會體中玄。",
    "X72n1435_033:0373b08_0": "壽余夫人",
    "X72n1435_033:0373b09_0": "洪疇五福先稱壽。",
    "X72n1435_033:0373b09_1": "真人無位須親究。",
    "X72n1435_033:0373b09_2": "根塵界裏見分明。",
    "X72n1435_033:0373b10_3": "彌滿乾坤非滲漏。",
    "X72n1435_033:0373b10_4": "一道靈光萬境閒。",
    "X72n1435_033:0373b10_5": "夢回端不是人間。",
    "X72n1435_033:0373b11_6": "霜清月冷罏煙馥。",
    "X72n1435_033:0373b11_7": "賸有芙蓉帶露寒。",
    "X72n1435_033:0373b11_8": "今年五十逢初度。",
    "X72n1435_033:0373b12_9": "嚴淨毗尼乘戒住。",
    "X72n1435_033:0373b12_10": "不須仙母慶長齡。",
    "X72n1435_033:0373b12_11": "家庭變作明珠庫。",
    "X72n1435_033:0373b13_12": "明珠寶藏用無窮。",
    "X72n1435_033:0373b13_13": "機感臨時觸處通。",
    "X72n1435_033:0373b13_14": "壽量誰能分甲子。",
    "X72n1435_033:0373b14_15": "扶桑原在海門東。",
    "X72n1435_033:0373b15_0": "壽熊母",
    "X72n1435_033:0373b16_0": "洪疇五福先稱壽。",
    "X72n1435_033:0373b16_1": "遐齡萬善皆成就。",
    "X72n1435_033:0373b16_2": "不須瑤島祝長生。",
    "X72n1435_033:0373b17_3": "一句彌陀清白晝。",
    "X72n1435_033:0373b17_4": "彌陀一句樂邦成。",
    "X72n1435_033:0373b17_5": "水鳥風柯吐妙聲。",
    "X72n1435_033:0373b18_6": "彈指笑看花上品。",
    "X72n1435_033:0373b18_7": "方知大道坦然平。",
    "X72n1435_033:0373b18_8": "初度優曇符耳順。",
    "X72n1435_033:0373b19_9": "更誇土淨惟心淨。",
    "X72n1435_033:0373b19_10": "百務紛紜事似麻。",
    "X72n1435_033:0373b19_11": "須知永處那伽定。",
    "X72n1435_033:0373b20_12": "自是兒孫增上緣。",
    "X72n1435_033:0373b20_13": "不求天道不求仙。",
    "X72n1435_033:0373b20_14": "玻璃地面黃金色。",
    "X72n1435_033:0373b21_15": "賸有丹沙注大年。",
    "X72n1435_033:0373b22_0": "贈天頤居士造墖壽母",
    "X72n1435_033:0373b23_0": "諸供養中。",
    "X72n1435_033:0373b23_1": "法供養最。",
    "X72n1435_033:0373b23_2": "撮土聚沙。",
    "X72n1435_033:0373b23_3": "成羣作隊。",
    "X72n1435_033:0373b23_4": "我大居士。",
    "X72n1435_033:0373b24_0": "欲展孝思。",
    "X72n1435_033:0373b24_1": "竪剎竿幢。",
    "X72n1435_033:0373b24_2": "為壽尊慈。",
    "X72n1435_033:0373b24_3": "令母怡然。",
    "X72n1435_033:0373b24_4": "惟彩衣子。",
    "X72n1435_033:0373c01_0": "世出世異。",
    "X72n1435_033:0373c01_1": "不可方比。",
    "X72n1435_033:0373c01_2": "實非莊嚴。",
    "X72n1435_033:0373c01_3": "而成莊嚴。",
    "X72n1435_033:0373c01_4": "飾此片地。",
    "X72n1435_033:0373c02_0": "億萬斯年。",
    "X72n1435_033:0373c02_1": "聞古尊宿。",
    "X72n1435_033:0373c02_2": "禮墖報母。",
    "X72n1435_033:0373c02_3": "朱冠緋衣。",
    "X72n1435_033:0373c02_4": "空中與語。",
    "X72n1435_033:0373c03_0": "從地湧出。",
    "X72n1435_033:0373c03_1": "自當證知。",
    "X72n1435_033:0373c03_2": "快說法華。",
    "X72n1435_033:0373c03_3": "今正是時。",
    "X72n1435_033:0373c04_0": "壽芝泉翁",
    "X72n1435_033:0373c05_0": "記昔隣居。",
    "X72n1435_033:0373c05_1": "音容宛然。",
    "X72n1435_033:0373c05_2": "棋聲入夢。",
    "X72n1435_033:0373c05_3": "衣帶香煙。",
    "X72n1435_033:0373c05_4": "時聞庭訓。",
    "X72n1435_033:0373c06_0": "顏歡心服。",
    "X72n1435_033:0373c06_1": "塵世譏呵。",
    "X72n1435_033:0373c06_2": "了無一物。",
    "X72n1435_033:0373c06_3": "我來學道。",
    "X72n1435_033:0373c06_4": "三十餘載。",
    "X72n1435_033:0373c07_0": "翁之德業。",
    "X72n1435_033:0373c07_1": "光明愈大。",
    "X72n1435_033:0373c07_2": "翁今八十。",
    "X72n1435_033:0373c07_3": "懸弧大誕。",
    "X72n1435_033:0373c07_4": "芳躅雲仍。",
    "X72n1435_033:0373c08_0": "金丹燦爛。",
    "X72n1435_033:0373c08_1": "令我遐想。",
    "X72n1435_033:0373c08_2": "莫侍壽筵。",
    "X72n1435_033:0373c08_3": "曾入之門。",
    "X72n1435_033:0373c08_4": "未兆之先。",
    "X72n1435_033:0373c09_0": "翁鑒我語。",
    "X72n1435_033:0373c09_1": "我為翁壽。",
    "X72n1435_033:0373c09_2": "龍性久馴。",
    "X72n1435_033:0373c09_3": "鮐齒益厚。",
    "X72n1435_033:0373c09_4": "析塵點墨。",
    "X72n1435_033:0373c10_0": "喻如恒沙。",
    "X72n1435_033:0373c10_1": "較翁之壽。",
    "X72n1435_033:0373c10_2": "何啻天涯。",
    "X72n1435_033:0373c10_3": "翁壽如嶽。",
    "X72n1435_033:0373c10_4": "非峙可比。",
    "X72n1435_033:0373c11_0": "翁壽如海。",
    "X72n1435_033:0373c11_1": "非波可擬。",
    "X72n1435_033:0373c11_2": "勁挺澄湛。",
    "X72n1435_033:0373c11_3": "世莫能知。",
    "X72n1435_033:0373c11_4": "往今來古。",
    "X72n1435_033:0373c12_0": "今正是時。",
    "X72n1435_033:0373c12_1": "此偈誰作。",
    "X72n1435_033:0373c12_2": "誰為賀者。",
    "X72n1435_033:0373c12_3": "吾由昔人。",
    "X72n1435_033:0373c12_4": "非昔人也。",
    "X72n1435_033:0373c13_0": "壽李元谷居士",
    "X72n1435_033:0373c14_0": "竭世樞機世罕知。",
    "X72n1435_033:0373c14_1": "娘生六十未移時。",
    "X72n1435_033:0373c14_2": "逢場竿木彌三際。",
    "X72n1435_033:0373c15_3": "落草曇花吐一枝。",
    "X72n1435_033:0373c15_4": "不問真空談至理。",
    "X72n1435_033:0373c15_5": "喜將俗諦話離微。",
    "X72n1435_033:0373c16_6": "山僧欲賀無他物。",
    "X72n1435_033:0373c16_7": "罄幅惟書景福詩。",
    "X72n1435_033:0373c17_0": "壽知非元座六袠(三首)",
    "X72n1435_033:0373c18_0": "從余三十載。",
    "X72n1435_033:0373c18_1": "瀟灑不隨流。",
    "X72n1435_033:0373c18_2": "策杖防苔滑。",
    "X72n1435_033:0373c18_3": "經行喜樹稠。",
    "X72n1435_033:0373c19_0": "堂中三下板。",
    "X72n1435_033:0373c19_1": "雲外一聲鳩。",
    "X72n1435_033:0373c19_2": "今日逢初度。",
    "X72n1435_033:0373c19_3": "俄驚半白頭。",
    "X72n1435_033:0373c20_0": "從余三十載。",
    "X72n1435_033:0373c20_1": "寒暑不憚行。",
    "X72n1435_033:0373c20_2": "忍草和雲秀。",
    "X72n1435_033:0373c20_3": "曇花匝地生戒光恒皎潔。",
    "X72n1435_033:0373c21_4": "清課倍修明。",
    "X72n1435_033:0373c21_5": "道及塵緣事。",
    "X72n1435_033:0373c21_6": "鴻毛一樣輕。",
    "X72n1435_033:0373c22_0": "從余三十載。",
    "X72n1435_033:0373c22_1": "清範可規僧。",
    "X72n1435_033:0373c22_2": "懶弄閒家具。",
    "X72n1435_033:0373c22_3": "寧牽爛葛藤。",
    "X72n1435_033:0373c23_0": "法幢摧意淨。",
    "X72n1435_033:0373c23_1": "華藏等身恒。",
    "X72n1435_033:0373c23_2": "秉拂言親薦。",
    "X72n1435_033:0373c23_3": "輪機似不曾。",
    "X72n1435_033:0373c24_0": "壽閴然法弟",
    "X72n1435_033:0374a01_0": "多年瓶錫侍吾師。",
    "X72n1435_033:0374a01_1": "今日春秋正是時。",
    "X72n1435_033:0374a01_2": "謾道姓寒詶節序。",
    "X72n1435_033:0374a02_3": "笑看嘉運綻瓊枝。",
    "X72n1435_033:0374a03_0": "壽玄鏡成宗(二首)",
    "X72n1435_033:0374a04_0": "自古禪門無歲月。",
    "X72n1435_033:0374a04_1": "浪言五十是誰傳。",
    "X72n1435_033:0374a04_2": "要知劫外真消息。",
    "X72n1435_033:0374a05_3": "日照澄江錦一團。",
    "X72n1435_033:0374a06_0": "日月星辰談實相。",
    "X72n1435_033:0374a06_1": "山河大地演圓音。",
    "X72n1435_033:0374a06_2": "紅爐燄裏重添火。",
    "X72n1435_033:0374a07_3": "炟赫烹蒸古佛心。",
    "X72n1435_033:0374a08_0": "壽萬融上座",
    "X72n1435_033:0374a09_0": "相逢爾我方新臘。",
    "X72n1435_033:0374a09_1": "轉眼韶光已二毛。",
    "X72n1435_033:0374a09_2": "夢裏不知霜月老。",
    "X72n1435_033:0374a10_3": "乘杯好弄浙江潮。",
    "X72n1435_033:0374a11_0": "壽黃心鏡居士",
    "X72n1435_033:0374a12_0": "百歲光陰已半過。",
    "X72n1435_033:0374a12_1": "晦明遷變柰渠何。",
    "X72n1435_033:0374a12_2": "維摩昔日曾聞欵。",
    "X72n1435_033:0374a13_3": "塵劫都來一剎那。",
    "X72n1435_033:0374a14_0": "壽智諳禪人",
    "X72n1435_033:0374a15_0": "幻化人間五十年。",
    "X72n1435_033:0374a15_1": "放憨山谷種山田。",
    "X72n1435_033:0374a15_2": "白雲明月都耕遍。",
    "X72n1435_033:0374a16_3": "頭角依稀猶未全。",
    "X72n1435_033:0374a17_0": "鋤頭柄上是生涯。",
    "X72n1435_033:0374a17_1": "秋煞冬枯春放花。",
    "X72n1435_033:0374a17_2": "歲月盡來渠變易。",
    "X72n1435_033:0374a18_3": "休教雲霧濕袈裟。",
    "X72n1435_033:0374a19_0": "趙州八十尚勤勞。",
    "X72n1435_033:0374a19_1": "勘驗諸方氣象驕。",
    "X72n1435_033:0374a19_2": "要識古人真實處。",
    "X72n1435_033:0374a20_3": "莫隨溫飽便逍遙。",
    "X72n1435_033:0374a21_0": "法華壽量析微塵。",
    "X72n1435_033:0374a21_1": "析盡微塵礙眼睛。",
    "X72n1435_033:0374a21_2": "只教須彌翻白浪。",
    "X72n1435_033:0374a22_3": "佛生塵界不關情。",
    "X72n1435_033:0374a24_0": "無異禪師廣錄卷第三十三"
}