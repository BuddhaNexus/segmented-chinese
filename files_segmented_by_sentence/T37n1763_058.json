[
    {
        "source_sentence": "5大般涅槃經集解卷第五十八",
        "from": "T37n1763_058:0561b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣出俱尸城緣起",
        "from": "T37n1763_058:0561b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣出俱尸城涅槃緣起",
        "from": "T37n1763_058:0561b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣出須達緣起　廣出逐外道緣起師子吼品之第五師子吼言：",
        "from": "T37n1763_058:0561b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊！",
        "from": "T37n1763_058:0561b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六大國至拘尸那城入般涅槃。",
        "from": "T37n1763_058:0561b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生有待處漏盡。",
        "from": "T37n1763_058:0561b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下將辨處為道，故發問也。",
        "from": "T37n1763_058:0561b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_058:0561b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修道之第四，文人寄處所以明道也。",
        "from": "T37n1763_058:0561b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大意有五因緣：",
        "from": "T37n1763_058:0561b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一為益人曠遠；",
        "from": "T37n1763_058:0561b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二欲報地往恩；",
        "from": "T37n1763_058:0561b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三為欲還此中正受；",
        "from": "T37n1763_058:0561b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四為果彼本願；",
        "from": "T37n1763_058:0561b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五為逐外道也。",
        "from": "T37n1763_058:0561b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_058:0561b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝不應言拘尸那城至邊地弊惡隘陋小城。",
        "from": "T37n1763_058:0561b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先答不應謂此為隘陋也。",
        "from": "T37n1763_058:0561b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_058:0561b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念往昔過恒沙劫至我眷屬者受恩能報。",
        "from": "T37n1763_058:0561b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明此是初發心處，故在此也。",
        "from": "T37n1763_058:0561b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_058:0561b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二，報地恩也。",
        "from": "T37n1763_058:0561b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_058:0561b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往昔眾生至娑羅樹間三昧正受。",
        "from": "T37n1763_058:0561b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明此是往昔出家修道之處也。",
        "from": "T37n1763_058:0561b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_058:0561b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三，欲還此中，三昧正受故也。",
        "from": "T37n1763_058:0561b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_058:0561b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念往昔過無量劫至敷揚演說大涅槃經。",
        "from": "T37n1763_058:0561b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明此是發願之處也。",
        "from": "T37n1763_058:0561b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_058:0561b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四，果本願也。",
        "from": "T37n1763_058:0561b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_058:0561b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我初出家未得阿耨至我時默然已受彼請。",
        "from": "T37n1763_058:0561b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為洴沙王有請故，所以來此也。",
        "from": "T37n1763_058:0561c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_058:0561c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我初得阿耨多羅至我即往彼受王供養。",
        "from": "T37n1763_058:0561c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下皆為逐外道故，次第至此。",
        "from": "T37n1763_058:0561c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道於此必受化故，故來此也。",
        "from": "T37n1763_058:0561c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_058:0561c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五，為逐外道，兼先受此受故也。",
        "from": "T37n1763_058:0561c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道六師相與集聚至我時受已即住其中。",
        "from": "T37n1763_058:0561c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因出須達所起祇洹精舍事也。",
        "from": "T37n1763_058:0561c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時六師心生嫉妬悉共集詣波斯匿王。",
        "from": "T37n1763_058:0561c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下廣說外道之辭也。",
        "from": "T37n1763_058:0561c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言：",
        "from": "T37n1763_058:0561c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王當知至六師之徒歡喜而出。",
        "from": "T37n1763_058:0561c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王知有益，是故許之。",
        "from": "T37n1763_058:0561c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時波斯匿王即勅嚴駕至阿耨多羅三藐三菩提心。",
        "from": "T37n1763_058:0561c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外道雖復未降，而所益已多也。",
        "from": "T37n1763_058:0561c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時六師各相謂言至阿耨多羅三藐三菩提心。",
        "from": "T37n1763_058:0561c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_058:0561c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所至，略已遍也。",
        "from": "T37n1763_058:0561c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第五十八",
        "from": "T37n1763_058:0561c17_100",
        "context_with_next_sentence": false
    }
]