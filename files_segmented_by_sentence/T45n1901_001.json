[
    {
        "source_sentence": "護命放生軌儀法",
        "from": "T45n1901_001:0902a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師義淨撰",
        "from": "T45n1901_001:0902a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫以懷生者。皆愛其生。上通賢智。有死者。咸",
        "from": "T45n1901_001:0902a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畏其死。",
        "from": "T45n1901_001:0902a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下洎蜫蟲。",
        "from": "T45n1901_001:0902a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是善逝隨事而修慈。",
        "from": "T45n1901_001:0902a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不損含識。",
        "from": "T45n1901_001:0902a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量內身而准物。",
        "from": "T45n1901_001:0902a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀杖不加唯以大悲。",
        "from": "T45n1901_001:0902a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣揚法化。",
        "from": "T45n1901_001:0902a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於護生處。",
        "from": "T45n1901_001:0902a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極致慇懃。",
        "from": "T45n1901_001:0902a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛弟子。",
        "from": "T45n1901_001:0902a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "理應隨作。",
        "from": "T45n1901_001:0902a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀蟲濾水。",
        "from": "T45n1901_001:0902a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是出家之要儀。",
        "from": "T45n1901_001:0902a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見危存護。",
        "from": "T45n1901_001:0902a21_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃悲中之拯急。",
        "from": "T45n1901_001:0902a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既知有蟲。",
        "from": "T45n1901_001:0902a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律文令作放生器者。",
        "from": "T45n1901_001:0902a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為西國久行。",
        "from": "T45n1901_001:0902a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人皆共解東夏先來未識。",
        "from": "T45n1901_001:0902a23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故亦須委其儀。",
        "from": "T45n1901_001:0902a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不具陳。",
        "from": "T45n1901_001:0902a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無由曉悟。",
        "from": "T45n1901_001:0902a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其器任用鐵銅瓦木。",
        "from": "T45n1901_001:0902a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓦即安鼻鐵木准成。",
        "from": "T45n1901_001:0902a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若擬隨身將去。",
        "from": "T45n1901_001:0902a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可用銅作。",
        "from": "T45n1901_001:0902a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯受二升三升。",
        "from": "T45n1901_001:0902a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是舊來小銅罐子。",
        "from": "T45n1901_001:0902a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還施銅系。",
        "from": "T45n1901_001:0902a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令穿手得過。",
        "from": "T45n1901_001:0902a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底傍一邊。",
        "from": "T45n1901_001:0902a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須安銅鈕。",
        "from": "T45n1901_001:0902a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可受小梅指頭。",
        "from": "T45n1901_001:0902a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若乞食去時。",
        "from": "T45n1901_001:0902a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿在左臂。",
        "from": "T45n1901_001:0902a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以衣掩蓋。",
        "from": "T45n1901_001:0902a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手携鉢。",
        "from": "T45n1901_001:0902a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞食得已。",
        "from": "T45n1901_001:0902a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨至一家。",
        "from": "T45n1901_001:0902b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置飯鉢。",
        "from": "T45n1901_001:0902b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自將淨繩一條。",
        "from": "T45n1901_001:0902b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如麁箸許。",
        "from": "T45n1901_001:0902b01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨井深淺。",
        "from": "T45n1901_001:0902b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫罐取水。",
        "from": "T45n1901_001:0902b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濾以小羅。",
        "from": "T45n1901_001:0902b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斟酌得足。",
        "from": "T45n1901_001:0902b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以繩一頭穿鈕。",
        "from": "T45n1901_001:0902b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "急繫擡系等。",
        "from": "T45n1901_001:0902b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫小鐵鉤。",
        "from": "T45n1901_001:0902b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤系起時。",
        "from": "T45n1901_001:0902b03_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "務令平穩。",
        "from": "T45n1901_001:0902b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此並預先作了。",
        "from": "T45n1901_001:0902b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得臨時求覓。",
        "from": "T45n1901_001:0902b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以小羅。",
        "from": "T45n1901_001:0902b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆蟲罐內。",
        "from": "T45n1901_001:0902b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徐徐放下。",
        "from": "T45n1901_001:0902b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至水縱鉤。",
        "from": "T45n1901_001:0902b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔繩令覆。",
        "from": "T45n1901_001:0902b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再三下濯。",
        "from": "T45n1901_001:0902b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方牽出井。",
        "from": "T45n1901_001:0902b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是乞食之儀也。",
        "from": "T45n1901_001:0902b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或用銅椀漆椀。",
        "from": "T45n1901_001:0902b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿孔著系。",
        "from": "T45n1901_001:0902b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "權用亦得。",
        "from": "T45n1901_001:0902b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若在寺者。",
        "from": "T45n1901_001:0902b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以常用鐵罐覆之。",
        "from": "T45n1901_001:0902b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前安置。",
        "from": "T45n1901_001:0902b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少有別處。",
        "from": "T45n1901_001:0902b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "底傍著鐵鐶。",
        "from": "T45n1901_001:0902b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可容三指。",
        "from": "T45n1901_001:0902b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以罐鉤內中。",
        "from": "T45n1901_001:0902b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擡起系等同前著鉤。",
        "from": "T45n1901_001:0902b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覆蟲在中。",
        "from": "T45n1901_001:0902b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放使至水。",
        "from": "T45n1901_001:0902b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假令深井亦得為之。",
        "from": "T45n1901_001:0902b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若別畜繩。",
        "from": "T45n1901_001:0902b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恐成勞擾。",
        "from": "T45n1901_001:0902b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若井深處。",
        "from": "T45n1901_001:0902b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或可別為盆貯。",
        "from": "T45n1901_001:0902b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或可送往河池。",
        "from": "T45n1901_001:0902b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瀉水竟時。",
        "from": "T45n1901_001:0902b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還須滌器。",
        "from": "T45n1901_001:0902b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯其法也。",
        "from": "T45n1901_001:0902b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "濾羅樣式。",
        "from": "T45n1901_001:0902b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如別處言之。",
        "from": "T45n1901_001:0902b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈容井口之上翻羅。",
        "from": "T45n1901_001:0902b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "元無放生之器。",
        "from": "T45n1901_001:0902b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲似護戒。",
        "from": "T45n1901_001:0902b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧顧蟲亡。",
        "from": "T45n1901_001:0902b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以如來聖教。",
        "from": "T45n1901_001:0902b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲為本。",
        "from": "T45n1901_001:0902b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所制戒律。",
        "from": "T45n1901_001:0902b15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪有性遮。",
        "from": "T45n1901_001:0902b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮則准事合經。",
        "from": "T45n1901_001:0902b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性乃理應從重。",
        "from": "T45n1901_001:0902b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性罪之內。",
        "from": "T45n1901_001:0902b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生最初。",
        "from": "T45n1901_001:0902b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故智人特宜存護。",
        "from": "T45n1901_001:0902b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若將此為輕者。",
        "from": "T45n1901_001:0902b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更復何有重哉。",
        "from": "T45n1901_001:0902b18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能依教作者。",
        "from": "T45n1901_001:0902b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在得長命果報。",
        "from": "T45n1901_001:0902b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來世當生淨土。",
        "from": "T45n1901_001:0902b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且神州之地。",
        "from": "T45n1901_001:0902b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四百餘城。",
        "from": "T45n1901_001:0902b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出家之人動有萬計。",
        "from": "T45n1901_001:0902b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於濾水事。",
        "from": "T45n1901_001:0902b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存心者寡。",
        "from": "T45n1901_001:0902b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習俗生常。",
        "from": "T45n1901_001:0902b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見輕佛教。",
        "from": "T45n1901_001:0902b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可一一門到口傳。",
        "from": "T45n1901_001:0902b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "冀諸行人遞相教習。",
        "from": "T45n1901_001:0902b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使學通三藏。",
        "from": "T45n1901_001:0902b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐證四禪。",
        "from": "T45n1901_001:0902b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鎮想無生。",
        "from": "T45n1901_001:0902b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄心空理。",
        "from": "T45n1901_001:0902b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不護命。",
        "from": "T45n1901_001:0902b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依教奉持。",
        "from": "T45n1901_001:0902b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終亦不免佛所訶責。",
        "from": "T45n1901_001:0902b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十惡初罪。",
        "from": "T45n1901_001:0902b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰代受之。",
        "from": "T45n1901_001:0902b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且如見有屠兒牽羊入寺。",
        "from": "T45n1901_001:0902b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不過數口。",
        "from": "T45n1901_001:0902b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放作長生。",
        "from": "T45n1901_001:0902b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾共聚看。",
        "from": "T45n1901_001:0902b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指稱善。",
        "from": "T45n1901_001:0902b26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧知房內用水。",
        "from": "T45n1901_001:0902b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日殺千生萬生。",
        "from": "T45n1901_001:0902b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既知理教不輕。",
        "from": "T45n1901_001:0902b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜應細羅細察。",
        "from": "T45n1901_001:0902b27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自利利物。",
        "from": "T45n1901_001:0902b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善護善思。",
        "from": "T45n1901_001:0902b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有令人耕田種植。",
        "from": "T45n1901_001:0902b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "規求小利。",
        "from": "T45n1901_001:0902b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見大尤。",
        "from": "T45n1901_001:0902b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水陸俱傷。",
        "from": "T45n1901_001:0902b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生無數。",
        "from": "T45n1901_001:0902b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯之罪咎。",
        "from": "T45n1901_001:0902c01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲如之何。",
        "from": "T45n1901_001:0902c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直如束手泉門。",
        "from": "T45n1901_001:0902c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任他處分。",
        "from": "T45n1901_001:0902c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "T45n1901_001:0902c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殺生之人。",
        "from": "T45n1901_001:0902c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當墮地獄餓鬼畜生。",
        "from": "T45n1901_001:0902c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設得為人。",
        "from": "T45n1901_001:0902c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "短命多病。",
        "from": "T45n1901_001:0902c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼此苦。",
        "from": "T45n1901_001:0902c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰當受之。",
        "from": "T45n1901_001:0902c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫有能為。",
        "from": "T45n1901_001:0902c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉甚善。",
        "from": "T45n1901_001:0902c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂釋迦末法。",
        "from": "T45n1901_001:0902c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共結慈念之因。",
        "from": "T45n1901_001:0902c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒初成。",
        "from": "T45n1901_001:0902c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱證無生之果。",
        "from": "T45n1901_001:0902c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣如別傳。",
        "from": "T45n1901_001:0902c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此不煩云。",
        "from": "T45n1901_001:0902c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護命放生軌儀法",
        "from": "T45n1901_001:0902c07_100",
        "context_with_next_sentence": false
    }
]