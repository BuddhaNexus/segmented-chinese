{
    "T45n1901_001:0902a14_0": "護命放生軌儀法",
    "T45n1901_001:0902a16_0": "唐三藏法師義淨撰",
    "T45n1901_001:0902a17_0": "夫以懷生者。",
    "T45n1901_001:0902a17_1": "皆愛其生。",
    "T45n1901_001:0902a17_2": "上通賢智。",
    "T45n1901_001:0902a17_3": "有死者。",
    "T45n1901_001:0902a17_4": "咸畏其死。",
    "T45n1901_001:0902a18_5": "下洎蜫蟲。",
    "T45n1901_001:0902a18_6": "由是善逝隨事而修慈。",
    "T45n1901_001:0902a18_7": "不損含識。",
    "T45n1901_001:0902a19_8": "量內身而准物。",
    "T45n1901_001:0902a19_9": "刀杖不加唯以大悲。",
    "T45n1901_001:0902a20_0": "宣揚法化。",
    "T45n1901_001:0902a20_1": "於護生處。",
    "T45n1901_001:0902a20_2": "極致慇懃。",
    "T45n1901_001:0902a20_3": "是佛弟子。",
    "T45n1901_001:0902a20_4": "理應隨作。",
    "T45n1901_001:0902a21_5": "觀蟲濾水。",
    "T45n1901_001:0902a21_6": "是出家之要儀。",
    "T45n1901_001:0902a21_7": "見危存護。",
    "T45n1901_001:0902a22_0": "乃悲中之拯急。",
    "T45n1901_001:0902a22_1": "既知有蟲。",
    "T45n1901_001:0902a22_2": "律文令作放生器者。",
    "T45n1901_001:0902a23_3": "但為西國久行。",
    "T45n1901_001:0902a23_4": "人皆共解東夏先來未識。",
    "T45n1901_001:0902a24_0": "故亦須委其儀。",
    "T45n1901_001:0902a24_1": "若不具陳。",
    "T45n1901_001:0902a24_2": "無由曉悟。",
    "T45n1901_001:0902a24_3": "其器任用鐵銅瓦木。",
    "T45n1901_001:0902a25_4": "瓦即安鼻鐵木准成。",
    "T45n1901_001:0902a25_5": "若擬隨身將去。",
    "T45n1901_001:0902a26_6": "可用銅作。",
    "T45n1901_001:0902a26_7": "唯受二升三升。",
    "T45n1901_001:0902a26_8": "即是舊來小銅罐子。",
    "T45n1901_001:0902a27_9": "還施銅系。",
    "T45n1901_001:0902a27_10": "令穿手得過。",
    "T45n1901_001:0902a27_11": "底傍一邊。",
    "T45n1901_001:0902a27_12": "須安銅鈕。",
    "T45n1901_001:0902a28_13": "可受小梅指頭。",
    "T45n1901_001:0902a28_14": "若乞食去時。",
    "T45n1901_001:0902a28_15": "穿在左臂。",
    "T45n1901_001:0902a29_16": "以衣掩蓋。",
    "T45n1901_001:0902a29_17": "右手携鉢。",
    "T45n1901_001:0902a29_18": "乞食得已。",
    "T45n1901_001:0902a29_19": "隨至一家。",
    "T45n1901_001:0902b01_20": "安置飯鉢。",
    "T45n1901_001:0902b01_21": "自將淨繩一條。",
    "T45n1901_001:0902b01_22": "如麁箸許。",
    "T45n1901_001:0902b01_23": "隨井深淺。",
    "T45n1901_001:0902b02_24": "繫罐取水。",
    "T45n1901_001:0902b02_25": "濾以小羅。",
    "T45n1901_001:0902b02_26": "斟酌得足。",
    "T45n1901_001:0902b02_27": "即以繩一頭穿鈕。",
    "T45n1901_001:0902b03_28": "急繫擡系等。",
    "T45n1901_001:0902b03_29": "繫小鐵鉤。",
    "T45n1901_001:0902b03_30": "鉤系起時。",
    "T45n1901_001:0902b04_0": "務令平穩。",
    "T45n1901_001:0902b04_1": "此並預先作了。",
    "T45n1901_001:0902b04_2": "不得臨時求覓。",
    "T45n1901_001:0902b04_3": "即以小羅。",
    "T45n1901_001:0902b05_4": "覆蟲罐內。",
    "T45n1901_001:0902b05_5": "徐徐放下。",
    "T45n1901_001:0902b05_6": "至水縱鉤。",
    "T45n1901_001:0902b05_7": "拔繩令覆。",
    "T45n1901_001:0902b06_8": "再三下濯。",
    "T45n1901_001:0902b06_9": "方牽出井。",
    "T45n1901_001:0902b06_10": "此是乞食之儀也。",
    "T45n1901_001:0902b07_0": "或用銅椀漆椀。",
    "T45n1901_001:0902b07_1": "穿孔著系。",
    "T45n1901_001:0902b07_2": "權用亦得。",
    "T45n1901_001:0902b07_3": "若在寺者。",
    "T45n1901_001:0902b08_4": "即以常用鐵罐覆之。",
    "T45n1901_001:0902b08_5": "如前安置。",
    "T45n1901_001:0902b08_6": "少有別處。",
    "T45n1901_001:0902b09_0": "底傍著鐵鐶。",
    "T45n1901_001:0902b09_1": "可容三指。",
    "T45n1901_001:0902b09_2": "以罐鉤內中。",
    "T45n1901_001:0902b09_3": "擡起系等同前著鉤。",
    "T45n1901_001:0902b10_4": "覆蟲在中。",
    "T45n1901_001:0902b10_5": "放使至水。",
    "T45n1901_001:0902b10_6": "假令深井亦得為之。",
    "T45n1901_001:0902b11_7": "若別畜繩。",
    "T45n1901_001:0902b11_8": "恐成勞擾。",
    "T45n1901_001:0902b11_9": "若井深處。",
    "T45n1901_001:0902b11_10": "或可別為盆貯。",
    "T45n1901_001:0902b12_11": "或可送往河池。",
    "T45n1901_001:0902b12_12": "瀉水竟時。",
    "T45n1901_001:0902b12_13": "還須滌器。",
    "T45n1901_001:0902b13_14": "斯其法也。",
    "T45n1901_001:0902b13_15": "濾羅樣式。",
    "T45n1901_001:0902b13_16": "如別處言之。",
    "T45n1901_001:0902b13_17": "豈容井口之上翻羅。",
    "T45n1901_001:0902b14_18": "元無放生之器。",
    "T45n1901_001:0902b14_19": "欲似護戒。",
    "T45n1901_001:0902b14_20": "寧顧蟲亡。",
    "T45n1901_001:0902b15_21": "但以如來聖教。",
    "T45n1901_001:0902b15_22": "慈悲為本。",
    "T45n1901_001:0902b15_23": "所制戒律。",
    "T45n1901_001:0902b16_0": "罪有性遮。",
    "T45n1901_001:0902b16_1": "遮則准事合經。",
    "T45n1901_001:0902b16_2": "性乃理應從重。",
    "T45n1901_001:0902b16_3": "性罪之內。",
    "T45n1901_001:0902b17_4": "殺生最初。",
    "T45n1901_001:0902b17_5": "是故智人特宜存護。",
    "T45n1901_001:0902b17_6": "若將此為輕者。",
    "T45n1901_001:0902b18_7": "更復何有重哉。",
    "T45n1901_001:0902b18_8": "若能依教作者。",
    "T45n1901_001:0902b18_9": "現在得長命果報。",
    "T45n1901_001:0902b19_10": "來世當生淨土。",
    "T45n1901_001:0902b19_11": "且神州之地。",
    "T45n1901_001:0902b20_0": "四百餘城。",
    "T45n1901_001:0902b20_1": "出家之人動有萬計。",
    "T45n1901_001:0902b20_2": "於濾水事。",
    "T45n1901_001:0902b20_3": "存心者寡。",
    "T45n1901_001:0902b21_4": "習俗生常。",
    "T45n1901_001:0902b21_5": "見輕佛教。",
    "T45n1901_001:0902b21_6": "不可一一門到口傳。",
    "T45n1901_001:0902b22_7": "冀諸行人遞相教習。",
    "T45n1901_001:0902b22_8": "設使學通三藏。",
    "T45n1901_001:0902b22_9": "坐證四禪。",
    "T45n1901_001:0902b23_10": "鎮想無生。",
    "T45n1901_001:0902b23_11": "澄心空理。",
    "T45n1901_001:0902b23_12": "若不護命。",
    "T45n1901_001:0902b23_13": "依教奉持。",
    "T45n1901_001:0902b24_14": "終亦不免佛所訶責。",
    "T45n1901_001:0902b24_15": "十惡初罪。",
    "T45n1901_001:0902b24_16": "誰代受之。",
    "T45n1901_001:0902b25_17": "且如見有屠兒牽羊入寺。",
    "T45n1901_001:0902b25_18": "不過數口。",
    "T45n1901_001:0902b25_19": "放作長生。",
    "T45n1901_001:0902b26_20": "眾共聚看。",
    "T45n1901_001:0902b26_21": "彈指稱善。",
    "T45n1901_001:0902b26_22": "寧知房內用水。",
    "T45n1901_001:0902b26_23": "日殺千生萬生。",
    "T45n1901_001:0902b27_24": "既知理教不輕。",
    "T45n1901_001:0902b27_25": "宜應細羅細察。",
    "T45n1901_001:0902b28_0": "自利利物。",
    "T45n1901_001:0902b28_1": "善護善思。",
    "T45n1901_001:0902b28_2": "復有令人耕田種植。",
    "T45n1901_001:0902b28_3": "規求小利。",
    "T45n1901_001:0902b29_4": "不見大尤。",
    "T45n1901_001:0902b29_5": "水陸俱傷。",
    "T45n1901_001:0902b29_6": "殺生無數。",
    "T45n1901_001:0902b29_7": "斯之罪咎。",
    "T45n1901_001:0902c01_8": "欲如之何。",
    "T45n1901_001:0902c01_9": "直如束手泉門。",
    "T45n1901_001:0902c01_10": "任他處分。",
    "T45n1901_001:0902c01_11": "故經云。",
    "T45n1901_001:0902c02_12": "殺生之人。",
    "T45n1901_001:0902c02_13": "當墮地獄餓鬼畜生。",
    "T45n1901_001:0902c02_14": "設得為人。",
    "T45n1901_001:0902c03_15": "短命多病。",
    "T45n1901_001:0902c03_16": "嗚呼此苦。",
    "T45n1901_001:0902c03_17": "誰當受之。",
    "T45n1901_001:0902c03_18": "脫有能為。",
    "T45n1901_001:0902c04_19": "善哉甚善。",
    "T45n1901_001:0902c04_20": "可謂釋迦末法。",
    "T45n1901_001:0902c04_21": "共結慈念之因。",
    "T45n1901_001:0902c05_0": "彌勒初成。",
    "T45n1901_001:0902c05_1": "俱證無生之果。",
    "T45n1901_001:0902c05_2": "廣如別傳。",
    "T45n1901_001:0902c05_3": "此不煩云。",
    "T45n1901_001:0902c07_0": "護命放生軌儀法"
}