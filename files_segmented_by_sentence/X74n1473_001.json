{
    "X74n1473_001:0369c06_0": "華嚴普賢行願修證儀",
    "X74n1473_001:0369c08_0": "宋　晉水沙門　淨源　集",
    "X74n1473_001:0369c09_0": "通敘緣起第一嚴淨道場第二",
    "X74n1473_001:0369c10_0": "淨身方法第三啟請聖賢第四",
    "X74n1473_001:0369c11_0": "觀行供養第五稱讚如來第六",
    "X74n1473_001:0369c12_0": "禮敬三寶第七脩行五悔第八",
    "X74n1473_001:0369c13_0": "旋繞稱念第九誦經規式第十",
    "X74n1473_001:0369c14_0": "通敘緣起第一",
    "X74n1473_001:0369c15_0": "昔清凉之疏行願也。",
    "X74n1473_001:0369c15_1": "恢廓妙源。",
    "X74n1473_001:0369c15_2": "窮深際遠。",
    "X74n1473_001:0369c15_3": "唯定慧祖師。",
    "X74n1473_001:0369c16_4": "章灼權實。",
    "X74n1473_001:0369c16_5": "拔幽極微。",
    "X74n1473_001:0369c16_6": "撰義鈔以廣之。",
    "X74n1473_001:0369c16_7": "故天下駕說者。",
    "X74n1473_001:0369c17_8": "皆由其辭而通其旨焉。",
    "X74n1473_001:0369c17_9": "至若研磨九會之奧。",
    "X74n1473_001:0369c18_10": "讐校十行之蘊。",
    "X74n1473_001:0369c18_11": "則存乎圓覺懺儀。",
    "X74n1473_001:0369c18_12": "而規式備矣。",
    "X74n1473_001:0369c19_0": "淨源。",
    "X74n1473_001:0369c19_1": "常患近世。",
    "X74n1473_001:0369c19_2": "傳吾祖教觀者。",
    "X74n1473_001:0369c19_3": "反習他宗諸懺之文。",
    "X74n1473_001:0369c20_4": "又何異乎其先祖有善。",
    "X74n1473_001:0369c20_5": "而不知者。",
    "X74n1473_001:0369c20_6": "亦君子之所恥也。",
    "X74n1473_001:0369c21_7": "熙寧二秊冬。",
    "X74n1473_001:0369c21_8": "因再治圓覺懺法。",
    "X74n1473_001:0369c21_9": "遂得熏毫滌硯。",
    "X74n1473_001:0369c22_10": "刪集斯文。",
    "X74n1473_001:0369c22_11": "求諸同志。",
    "X74n1473_001:0369c22_12": "以習以修。",
    "X74n1473_001:0369c22_13": "既而推寄有本。",
    "X74n1473_001:0369c23_0": "故用經名品目。",
    "X74n1473_001:0369c23_1": "而題其首。",
    "X74n1473_001:0369c23_2": "貴使來者。",
    "X74n1473_001:0369c23_3": "究定慧之宏功振清凉之茂德。",
    "X74n1473_001:0369c24_4": "立言更濟。",
    "X74n1473_001:0369c24_5": "而垂諸無窮者也。",
    "X74n1473_001:0370a01_0": "(九會十行。",
    "X74n1473_001:0370a01_1": "皆載廣懺儀文。",
    "X74n1473_001:0370a01_2": "自下九門。",
    "X74n1473_001:0370a01_3": "依圓覺懺。",
    "X74n1473_001:0370a01_4": "但開合小異耳)。",
    "X74n1473_001:0370a03_0": "嚴淨道場第二",
    "X74n1473_001:0370a04_0": "夫欲啟請聖賢。",
    "X74n1473_001:0370a04_1": "又須嚴淨壇場。",
    "X74n1473_001:0370a04_2": "不潔則道心不發。",
    "X74n1473_001:0370a05_0": "無所感降。",
    "X74n1473_001:0370a05_1": "是故應當嚴檀。",
    "X74n1473_001:0370a05_2": "供養三寶。",
    "X74n1473_001:0370a05_3": "求哀懺悔。",
    "X74n1473_001:0370a05_4": "過去世中所有惡業。",
    "X74n1473_001:0370a06_5": "其檀場方法。",
    "X74n1473_001:0370a06_6": "先須揀地。",
    "X74n1473_001:0370a06_7": "離於喧襍穢惡。",
    "X74n1473_001:0370a07_8": "及諸障難。",
    "X74n1473_001:0370a07_9": "若得深邃巖谷。",
    "X74n1473_001:0370a07_10": "幽僻林泉。",
    "X74n1473_001:0370a07_11": "最為殊妙。",
    "X74n1473_001:0370a08_12": "若在人間。",
    "X74n1473_001:0370a08_13": "須去一二尺舊土。",
    "X74n1473_001:0370a08_14": "以香泥塗地。",
    "X74n1473_001:0370a08_15": "懸諸幡花。",
    "X74n1473_001:0370a09_16": "當中置盧舍那像。",
    "X74n1473_001:0370a09_17": "兩伴置文殊普賢二像。",
    "X74n1473_001:0370a10_0": "佛前安普賢行願經。",
    "X74n1473_001:0370a10_1": "以函盛之。",
    "X74n1473_001:0370a10_2": "如其有力。",
    "X74n1473_001:0370a10_3": "依經考疏。",
    "X74n1473_001:0370a11_4": "彩畫七處九會圓幀。",
    "X74n1473_001:0370a11_5": "周圍挂之。",
    "X74n1473_001:0370a11_6": "點蓮花燈。",
    "X74n1473_001:0370a11_7": "焚百和香。",
    "X74n1473_001:0370a12_8": "諸莊嚴具。",
    "X74n1473_001:0370a12_9": "唯要潔淨。",
    "X74n1473_001:0370a12_10": "不必彌貴。",
    "X74n1473_001:0370a12_11": "各隨力分。",
    "X74n1473_001:0370a12_12": "奉獻供養聖賢。",
    "X74n1473_001:0370a13_13": "祇為表自虔誠。",
    "X74n1473_001:0370a13_14": "豈賢聖有好惡也。",
    "X74n1473_001:0370a13_15": "其安置方法。",
    "X74n1473_001:0370a14_16": "任自隨便。",
    "X74n1473_001:0370a14_17": "亦無局定之儀。",
    "X74n1473_001:0370a14_18": "初修方便。",
    "X74n1473_001:0370a14_19": "并其正修。",
    "X74n1473_001:0370a15_20": "皆用六齋日。",
    "X74n1473_001:0370a15_21": "此日四天王使者。",
    "X74n1473_001:0370a15_22": "諸天善神。",
    "X74n1473_001:0370a16_0": "來下人間。",
    "X74n1473_001:0370a16_1": "檢察善惡。",
    "X74n1473_001:0370a16_2": "見修行者。",
    "X74n1473_001:0370a16_3": "安慰守護。",
    "X74n1473_001:0370a16_4": "為獻瑞相。",
    "X74n1473_001:0370a17_5": "令人見者。",
    "X74n1473_001:0370a17_6": "心生歡喜。",
    "X74n1473_001:0370a17_7": "益諸根矣。",
    "X74n1473_001:0370a18_0": "淨身方法第三",
    "X74n1473_001:0370a19_0": "夫衣服身形。",
    "X74n1473_001:0370a19_1": "皆是行人心所依處也。",
    "X74n1473_001:0370a19_2": "若欲修此圓頓大行。",
    "X74n1473_001:0370a20_3": "先須禮懺。",
    "X74n1473_001:0370a20_4": "禮懺之法。",
    "X74n1473_001:0370a20_5": "必須淨心。",
    "X74n1473_001:0370a20_6": "心不孤起。",
    "X74n1473_001:0370a21_0": "必藉依緣。",
    "X74n1473_001:0370a21_1": "依緣清淨。",
    "X74n1473_001:0370a21_2": "心即清淨。",
    "X74n1473_001:0370a21_3": "故須嚴淨衣服身形也。",
    "X74n1473_001:0370a22_4": "然出家者。",
    "X74n1473_001:0370a22_5": "本合護淨。",
    "X74n1473_001:0370a22_6": "若料常時。",
    "X74n1473_001:0370a22_7": "護之不謹。",
    "X74n1473_001:0370a22_8": "即臨入道場。",
    "X74n1473_001:0370a23_9": "著新淨衣。",
    "X74n1473_001:0370a23_10": "如無新者。",
    "X74n1473_001:0370a23_11": "洗浣故衣。",
    "X74n1473_001:0370a23_12": "次須澡浴身體。",
    "X74n1473_001:0370a24_13": "身若穢觸。",
    "X74n1473_001:0370a24_14": "豈堪近於聖賢。",
    "X74n1473_001:0370a24_15": "雖諸佛無嫌。",
    "X74n1473_001:0370a24_16": "而神祇不衛。",
    "X74n1473_001:0370b01_17": "神祇不衛。",
    "X74n1473_001:0370b01_18": "則邪魔惱亂障難生也。",
    "X74n1473_001:0370b01_19": "非唯淨身。",
    "X74n1473_001:0370b02_20": "猶須淨心。",
    "X74n1473_001:0370b02_21": "絕諸緣念。",
    "X74n1473_001:0370b02_22": "專稟一心。",
    "X74n1473_001:0370b02_23": "念所修法。",
    "X74n1473_001:0370b02_24": "晝夜六時。",
    "X74n1473_001:0370b03_25": "禮請三寶。",
    "X74n1473_001:0370b03_26": "不得託事放逸睡眠。",
    "X74n1473_001:0370b03_27": "亦不剎那念世襍事。",
    "X74n1473_001:0370b04_28": "宜在密防。",
    "X74n1473_001:0370b04_29": "勿令萌動。",
    "X74n1473_001:0370b04_30": "三業如此。",
    "X74n1473_001:0370b04_31": "縱遇障緣。",
    "X74n1473_001:0370b05_32": "無退失矣。",
    "X74n1473_001:0370b06_0": "啟請聖賢第四",
    "X74n1473_001:0370b07_0": "(行者初入道場。",
    "X74n1473_001:0370b07_1": "稱念普賢菩薩。",
    "X74n1473_001:0370b07_2": "旋繞一匝。",
    "X74n1473_001:0370b07_3": "至法座前。",
    "X74n1473_001:0370b08_0": "敷尼師壇。",
    "X74n1473_001:0370b08_1": "正身合掌佇立。",
    "X74n1473_001:0370b08_2": "應先慈念一切眾生。",
    "X74n1473_001:0370b08_3": "誓興救拔。",
    "X74n1473_001:0370b09_4": "次超慇重心。",
    "X74n1473_001:0370b09_5": "恭請三寶。",
    "X74n1473_001:0370b09_6": "雖諸佛賢聖。",
    "X74n1473_001:0370b09_7": "無所不在。",
    "X74n1473_001:0370b10_0": "若不虔請。",
    "X74n1473_001:0370b10_1": "對而不現。",
    "X74n1473_001:0370b10_2": "故經譬如日出。",
    "X74n1473_001:0370b10_3": "普現世間。",
    "X74n1473_001:0370b10_4": "於一切淨水器中。",
    "X74n1473_001:0370b11_5": "影無不現。",
    "X74n1473_001:0370b11_6": "佛日亦爾。",
    "X74n1473_001:0370b11_7": "普現法界。",
    "X74n1473_001:0370b11_8": "無前無後。",
    "X74n1473_001:0370b12_9": "一切眾生。",
    "X74n1473_001:0370b12_10": "心淨器中。",
    "X74n1473_001:0370b12_11": "佛無不現。",
    "X74n1473_001:0370b12_12": "今應一心正念。",
    "X74n1473_001:0370b12_13": "慎勿散亂。",
    "X74n1473_001:0370b13_14": "五體投地。",
    "X74n1473_001:0370b13_15": "禮一切三寶。",
    "X74n1473_001:0370b13_16": "聲德者首喝云)。",
    "X74n1473_001:0370b14_0": "一切恭敬(自下眾同唱)",
    "X74n1473_001:0370b15_0": "一心頂禮。",
    "X74n1473_001:0370b15_1": "十方法界。",
    "X74n1473_001:0370b15_2": "常住三寶。",
    "X74n1473_001:0370b16_0": "(總禮三寶一拜。",
    "X74n1473_001:0370b16_1": "胡跪已。",
    "X74n1473_001:0370b16_2": "執手爐。",
    "X74n1473_001:0370b16_3": "燒眾名香。",
    "X74n1473_001:0370b16_4": "恭請聖賢。",
    "X74n1473_001:0370b17_0": "但每且一請。",
    "X74n1473_001:0370b17_1": "餘時不用。",
    "X74n1473_001:0370b17_2": "然諸家禮懺。",
    "X74n1473_001:0370b17_3": "皆先香花供養。",
    "X74n1473_001:0370b18_0": "今依圓覺儀式。",
    "X74n1473_001:0370b18_1": "皆先請耳)。",
    "X74n1473_001:0370b19_0": "一心奉請。",
    "X74n1473_001:0370b19_1": "南無十身初滿。",
    "X74n1473_001:0370b19_2": "正覺始成。",
    "X74n1473_001:0370b19_3": "不離閻浮。",
    "X74n1473_001:0370b19_4": "而昇天上。",
    "X74n1473_001:0370b20_5": "無盡身雲。",
    "X74n1473_001:0370b20_6": "本尊毗盧遮那佛(每請一拜)。",
    "X74n1473_001:0370b21_0": "一心奉請。",
    "X74n1473_001:0370b21_1": "南無普攝穢國。",
    "X74n1473_001:0370b21_2": "修大願王。",
    "X74n1473_001:0370b21_3": "皆蒙授記。",
    "X74n1473_001:0370b21_4": "阿彌陀佛。",
    "X74n1473_001:0370b22_5": "盡華嚴經中。",
    "X74n1473_001:0370b22_6": "華藏世界。",
    "X74n1473_001:0370b22_7": "反來會內。",
    "X74n1473_001:0370b22_8": "十方三世一切諸佛。",
    "X74n1473_001:0370b24_0": "一心奉請。",
    "X74n1473_001:0370b24_1": "南無大方廣佛華嚴經。",
    "X74n1473_001:0370b24_2": "剖裂玄微。",
    "X74n1473_001:0370b24_3": "一乘別教。",
    "X74n1473_001:0370b25_4": "汪洋悉修。",
    "X74n1473_001:0370b25_5": "十二分經。",
    "X74n1473_001:0370b26_0": "一心奉請。",
    "X74n1473_001:0370b26_1": "南無華嚴經主。",
    "X74n1473_001:0370b26_2": "不捨因門。",
    "X74n1473_001:0370b26_3": "發明行願。",
    "X74n1473_001:0370b26_4": "徧收玄妙。",
    "X74n1473_001:0370b27_5": "普賢菩薩摩訶薩(道場懺主。",
    "X74n1473_001:0370b27_6": "三請三拜)。",
    "X74n1473_001:0370c01_0": "一心奉請。",
    "X74n1473_001:0370c01_1": "南無七處九會。",
    "X74n1473_001:0370c01_2": "互彰主伴。",
    "X74n1473_001:0370c01_3": "文殊師利菩薩。",
    "X74n1473_001:0370c02_0": "賢首菩薩。",
    "X74n1473_001:0370c02_1": "及諸品中。",
    "X74n1473_001:0370c02_2": "微塵菩薩摩訶薩。",
    "X74n1473_001:0370c03_0": "一心奉請。",
    "X74n1473_001:0370c03_1": "南無華嚴經中。",
    "X74n1473_001:0370c03_2": "末會之主。",
    "X74n1473_001:0370c03_3": "五十五員。",
    "X74n1473_001:0370c03_4": "真善智識。",
    "X74n1473_001:0370c04_5": "百城求法。",
    "X74n1473_001:0370c04_6": "一生克備。",
    "X74n1473_001:0370c04_7": "善財等菩薩摩訶薩。",
    "X74n1473_001:0370c05_0": "一心奉請。",
    "X74n1473_001:0370c05_1": "南無觀自在菩薩。",
    "X74n1473_001:0370c05_2": "大勢至菩薩。",
    "X74n1473_001:0370c05_3": "彌勒菩薩。",
    "X74n1473_001:0370c06_0": "馬鳴龍樹。",
    "X74n1473_001:0370c06_1": "諸祖菩薩。",
    "X74n1473_001:0370c06_2": "及十方三世一切菩薩摩訶薩。",
    "X74n1473_001:0370c08_0": "一心奉請。",
    "X74n1473_001:0370c08_1": "南無末會之中。",
    "X74n1473_001:0370c08_2": "舍利弗等六千比丘。",
    "X74n1473_001:0370c08_3": "盡虗空界。",
    "X74n1473_001:0370c09_4": "微塵剎中。",
    "X74n1473_001:0370c09_5": "有學無學。",
    "X74n1473_001:0370c09_6": "一切聲聞緣覺聖僧。",
    "X74n1473_001:0370c10_0": "一心奉請。",
    "X74n1473_001:0370c10_1": "南無華嚴會中。",
    "X74n1473_001:0370c10_2": "常發大願。",
    "X74n1473_001:0370c10_3": "安人護法。",
    "X74n1473_001:0370c10_4": "梵釋四王。",
    "X74n1473_001:0370c11_5": "天龍八部。",
    "X74n1473_001:0370c11_6": "執金剛神。",
    "X74n1473_001:0370c11_7": "主虗空神。",
    "X74n1473_001:0370c11_8": "廼至諸世界中。",
    "X74n1473_001:0370c12_9": "主執神等。",
    "X74n1473_001:0370c12_10": "及此國內。",
    "X74n1473_001:0370c12_11": "主善罸惡。",
    "X74n1473_001:0370c12_12": "護伽藍神。",
    "X74n1473_001:0370c12_13": "守正法者。",
    "X74n1473_001:0370c13_14": "一切賢聖(此段但請不應禮拜。",
    "X74n1473_001:0370c13_15": "白衣無妨)。",
    "X74n1473_001:0370c14_0": "觀行供養第五",
    "X74n1473_001:0370c15_0": "(供養。",
    "X74n1473_001:0370c15_1": "稱讚。",
    "X74n1473_001:0370c15_2": "禮敬。",
    "X74n1473_001:0370c15_3": "懺悔。",
    "X74n1473_001:0370c15_4": "勸請。",
    "X74n1473_001:0370c15_5": "隨喜。",
    "X74n1473_001:0370c15_6": "回向。",
    "X74n1473_001:0370c15_7": "發願等八重。",
    "X74n1473_001:0370c15_8": "是修行人之本事。",
    "X74n1473_001:0370c16_9": "非別行法。",
    "X74n1473_001:0370c16_10": "世尊於離垢慧菩薩。",
    "X74n1473_001:0370c16_11": "所問經中具引也。",
    "X74n1473_001:0370c17_12": "亦是趣入華嚴之要門。",
    "X74n1473_001:0370c17_13": "故經文廣說諸佛功德妙用已。",
    "X74n1473_001:0370c18_14": "後云。",
    "X74n1473_001:0370c18_15": "若欲成就此功德門。",
    "X74n1473_001:0370c18_16": "應修十種廣大行願。",
    "X74n1473_001:0370c19_17": "西域本宗道流。",
    "X74n1473_001:0370c19_18": "皆于經中錄出。",
    "X74n1473_001:0370c19_19": "別行[言*奉]念修習。",
    "X74n1473_001:0370c20_20": "前後三譯。",
    "X74n1473_001:0370c20_21": "一晉朝佛陀跋陀羅。",
    "X74n1473_001:0370c20_22": "二唐朝不空三藏。",
    "X74n1473_001:0370c21_23": "三貞觀中。",
    "X74n1473_001:0370c21_24": "華嚴疏主等譯。",
    "X74n1473_001:0370c21_25": "其十行願。",
    "X74n1473_001:0370c21_26": "即是此供養等八也。",
    "X74n1473_001:0370c22_27": "但於勸請中開出轉法輪久住世二門。",
    "X74n1473_001:0370c22_28": "又於回向中。",
    "X74n1473_001:0370c23_29": "分出隨佛學。",
    "X74n1473_001:0370c23_30": "順眾生二門。",
    "X74n1473_001:0370c23_31": "故成其十句。",
    "X74n1473_001:0370c23_32": "請三寶竟。",
    "X74n1473_001:0370c24_33": "願慈悲應感。",
    "X74n1473_001:0370c24_34": "赴我機緣。",
    "X74n1473_001:0370c24_35": "仰想諸佛。",
    "X74n1473_001:0370c24_36": "及諸聖賢。",
    "X74n1473_001:0370c24_37": "雲集道場。",
    "X74n1473_001:0370c25_38": "徧滿虛空。",
    "X74n1473_001:0370c25_39": "知見我等。",
    "X74n1473_001:0370c25_40": "志心懇請。",
    "X74n1473_001:0370c25_41": "我等應當香華供養。",
    "X74n1473_001:0370c26_42": "聲德者執爐唱云)。",
    "X74n1473_001:0370c27_0": "是諸眾等。",
    "X74n1473_001:0370c27_1": "各各互跪。",
    "X74n1473_001:0370c27_2": "嚴持香花。",
    "X74n1473_001:0370c27_3": "如法供養。",
    "X74n1473_001:0370c28_0": "(至此停唱。",
    "X74n1473_001:0370c28_1": "巨手擎花。",
    "X74n1473_001:0370c28_2": "應起觀行。",
    "X74n1473_001:0370c28_3": "依經想云。",
    "X74n1473_001:0370c28_4": "所有盡法界。",
    "X74n1473_001:0371a01_5": "虛空界。",
    "X74n1473_001:0371a01_6": "十方三世。",
    "X74n1473_001:0371a01_7": "一切佛剎。",
    "X74n1473_001:0371a01_8": "極微塵中。",
    "X74n1473_001:0371a01_9": "一一各有一切世界。",
    "X74n1473_001:0371a02_10": "極微塵數佛。",
    "X74n1473_001:0371a02_11": "一一佛所。",
    "X74n1473_001:0371a02_12": "種種菩薩。",
    "X74n1473_001:0371a02_13": "海會圍繞。",
    "X74n1473_001:0371a03_14": "我以普願行願力故。",
    "X74n1473_001:0371a03_15": "起深信解。",
    "X74n1473_001:0371a03_16": "現前知見。",
    "X74n1473_001:0371a03_17": "悉以上妙諸供養具。",
    "X74n1473_001:0371a04_18": "而為供養。",
    "X74n1473_001:0371a04_19": "所謂花雲。",
    "X74n1473_001:0371a04_20": "鬘雲。",
    "X74n1473_001:0371a04_21": "天音樂雲。",
    "X74n1473_001:0371a04_22": "天傘盖雲。",
    "X74n1473_001:0371a05_23": "天衣服雲。",
    "X74n1473_001:0371a05_24": "天種種香。",
    "X74n1473_001:0371a05_25": "塗香。",
    "X74n1473_001:0371a05_26": "燒香。",
    "X74n1473_001:0371a05_27": "末香。",
    "X74n1473_001:0371a05_28": "如是等雲。",
    "X74n1473_001:0371a06_29": "一一量如須彌山王。",
    "X74n1473_001:0371a06_30": "燃種種燈。",
    "X74n1473_001:0371a06_31": "酥燈油燈。",
    "X74n1473_001:0371a06_32": "一一燈炷。",
    "X74n1473_001:0371a07_33": "如須彌山。",
    "X74n1473_001:0371a07_34": "一一燈油。",
    "X74n1473_001:0371a07_35": "如大海水。",
    "X74n1473_001:0371a07_36": "以如是等。",
    "X74n1473_001:0371a07_37": "諸供養具。",
    "X74n1473_001:0371a08_38": "常為供養。",
    "X74n1473_001:0371a08_39": "想已散花唱云)。",
    "X74n1473_001:0371a09_0": "願此香花雲。",
    "X74n1473_001:0371a09_1": "徧滿十方界。",
    "X74n1473_001:0371a09_2": "微塵剎土中。",
    "X74n1473_001:0371a09_3": "供養一切佛。",
    "X74n1473_001:0371a10_0": "尊法諸菩薩。",
    "X74n1473_001:0371a10_1": "聲聞緣覺眾。",
    "X74n1473_001:0371a10_2": "悉成妙花香。",
    "X74n1473_001:0371a10_3": "種種供具雲。",
    "X74n1473_001:0371a11_0": "而常為供養。",
    "X74n1473_001:0371a11_1": "普願諸三寶。",
    "X74n1473_001:0371a11_2": "受此香花雲。",
    "X74n1473_001:0371a11_3": "以為光明臺。",
    "X74n1473_001:0371a12_0": "廣於無邊界。",
    "X74n1473_001:0371a12_1": "無邊作佛事(唱舉起立。",
    "X74n1473_001:0371a12_2": "聲德者云)供養已一切恭敬(同禮一拜)。",
    "X74n1473_001:0371a14_0": "(按觀佛三海經。",
    "X74n1473_001:0371a14_1": "道場中。",
    "X74n1473_001:0371a14_2": "當獻草木之花。",
    "X74n1473_001:0371a14_3": "今行人多獻繒綵花者。",
    "X74n1473_001:0371a15_4": "盖霜雪時耳。",
    "X74n1473_001:0371a15_5": "餘時依彼經。",
    "X74n1473_001:0371a15_6": "求之。",
    "X74n1473_001:0371a15_7": "恭献三寶)。",
    "X74n1473_001:0371a16_0": "稱讚如來第六",
    "X74n1473_001:0371a17_0": "(既供養已。",
    "X74n1473_001:0371a17_1": "即應正身威儀。",
    "X74n1473_001:0371a17_2": "一心佇立。",
    "X74n1473_001:0371a17_3": "同讚諸佛。",
    "X74n1473_001:0371a17_4": "普賢微妙功德。",
    "X74n1473_001:0371a18_5": "是故經中。",
    "X74n1473_001:0371a18_6": "引微塵數佛已。",
    "X74n1473_001:0371a18_7": "次云。",
    "X74n1473_001:0371a18_8": "我當悉以甚深信解。",
    "X74n1473_001:0371a19_9": "現前知見各巨出過辯才天女。",
    "X74n1473_001:0371a19_10": "微妙舌根皆出無盡音聲海。",
    "X74n1473_001:0371a20_11": "一一音聲。",
    "X74n1473_001:0371a20_12": "出一切言辭海。",
    "X74n1473_001:0371a20_13": "稱揚讚歎。",
    "X74n1473_001:0371a21_14": "一切如來。",
    "X74n1473_001:0371a21_15": "諸功德海云。",
    "X74n1473_001:0371a21_16": "深信者。",
    "X74n1473_001:0371a21_17": "觀智力也。",
    "X74n1473_001:0371a21_18": "此是自因。",
    "X74n1473_001:0371a22_19": "亦是普賢法力為緣。",
    "X74n1473_001:0371a22_20": "故經云。",
    "X74n1473_001:0371a22_21": "而虛空界。",
    "X74n1473_001:0371a22_22": "乃至煩惱。",
    "X74n1473_001:0371a23_0": "無有盡故。",
    "X74n1473_001:0371a23_1": "我讚歎無有窮盡。",
    "X74n1473_001:0371a23_2": "十種行願。",
    "X74n1473_001:0371a23_3": "總結皆然。",
    "X74n1473_001:0371a23_4": "當知必須觀。",
    "X74n1473_001:0371a24_5": "行明白。",
    "X74n1473_001:0371a24_6": "方得能讚所讚。",
    "X74n1473_001:0371a24_7": "皆廣深無盡也)。",
    "X74n1473_001:0371a25_0": "　智慧光明如淨日　　眾行具足猶滿月　功德常盈譬巨海　　無垢無礙同虗空　十方所有諸國土　　一剎那中悉嚴淨　以妙音聲轉法輪　　普徧世間無與等　普賢身相如虗空　　依真而住非國土　隨諸眾生心所欲　　示現普身等一切　普發無邊功德願　　悉與一切眾生樂　盡未來際依行願　　常勤修習度眾生(讚已。",
    "X74n1473_001:0371b04_1": "當述建懺之意。",
    "X74n1473_001:0371b04_2": "隨自智力。",
    "X74n1473_001:0371b05_3": "端願陳之。",
    "X74n1473_001:0371b05_4": "毋致游辭)。",
    "X74n1473_001:0371b06_0": "禮敬三寶第七",
    "X74n1473_001:0371b07_0": "(既讚歎已。",
    "X74n1473_001:0371b07_1": "亦起觀行。",
    "X74n1473_001:0371b07_2": "依經想云。",
    "X74n1473_001:0371b07_3": "所有盡法界。",
    "X74n1473_001:0371b07_4": "虛空界。",
    "X74n1473_001:0371b08_0": "十方三世。",
    "X74n1473_001:0371b08_1": "一切佛剎。",
    "X74n1473_001:0371b08_2": "極微塵數諸佛世尊。",
    "X74n1473_001:0371b08_3": "我以普賢行願力故。",
    "X74n1473_001:0371b09_4": "深心信解。",
    "X74n1473_001:0371b09_5": "如對目前。",
    "X74n1473_001:0371b09_6": "悉以清淨。",
    "X74n1473_001:0371b09_7": "身語意業。",
    "X74n1473_001:0371b10_0": "常修禮敬。",
    "X74n1473_001:0371b10_1": "一一佛所。",
    "X74n1473_001:0371b10_2": "常現不可說。",
    "X74n1473_001:0371b10_3": "不可說。",
    "X74n1473_001:0371b10_4": "佛剎極微塵數身。",
    "X74n1473_001:0371b11_5": "一一身。",
    "X74n1473_001:0371b11_6": "徧禮不可說。",
    "X74n1473_001:0371b11_7": "不可說。",
    "X74n1473_001:0371b11_8": "佛剎極微塵數佛。",
    "X74n1473_001:0371b12_9": "虗空界盡。",
    "X74n1473_001:0371b12_10": "我禮乃盡。",
    "X74n1473_001:0371b12_11": "以虛空界。",
    "X74n1473_001:0371b12_12": "不可盡故。",
    "X74n1473_001:0371b12_13": "我此禮敬。",
    "X74n1473_001:0371b13_14": "無有窮盡。",
    "X74n1473_001:0371b13_15": "乃至身語意業。",
    "X74n1473_001:0371b13_16": "無有疲厭)。",
    "X74n1473_001:0371b14_0": "一心頂禮。",
    "X74n1473_001:0371b14_1": "十身初滿。",
    "X74n1473_001:0371b14_2": "正覺如成。",
    "X74n1473_001:0371b14_3": "不離閻浮。",
    "X74n1473_001:0371b14_4": "而昇天上。",
    "X74n1473_001:0371b15_0": "無盡身雲。",
    "X74n1473_001:0371b15_1": "本尊毗盧遮那佛。",
    "X74n1473_001:0371b16_0": "一心頂禮。",
    "X74n1473_001:0371b16_1": "普攝穢國。",
    "X74n1473_001:0371b16_2": "修大行願。",
    "X74n1473_001:0371b16_3": "蓮花化生。",
    "X74n1473_001:0371b16_4": "皆蒙授記。",
    "X74n1473_001:0371b17_0": "阿彌陀佛。",
    "X74n1473_001:0371b18_0": "一心頂禮。",
    "X74n1473_001:0371b18_1": "發辭讚定。",
    "X74n1473_001:0371b18_2": "普現其前。",
    "X74n1473_001:0371b18_3": "同名法慧。",
    "X74n1473_001:0371b18_4": "功德林等一切諸佛。",
    "X74n1473_001:0371b20_0": "一心頂禮。",
    "X74n1473_001:0371b20_1": "眉間放光。",
    "X74n1473_001:0371b20_2": "勸說十地。",
    "X74n1473_001:0371b20_3": "與金剛藏法門辯才十方諸佛。",
    "X74n1473_001:0371b22_0": "一心頂禮。",
    "X74n1473_001:0371b22_1": "出現品中。",
    "X74n1473_001:0371b22_2": "稱讚大行。",
    "X74n1473_001:0371b22_3": "皆說此法。",
    "X74n1473_001:0371b22_4": "同名普賢。",
    "X74n1473_001:0371b23_0": "微塵數佛。",
    "X74n1473_001:0371b24_0": "一心頂禮。",
    "X74n1473_001:0371b24_1": "盡華嚴經中。",
    "X74n1473_001:0371b24_2": "華藏世界。",
    "X74n1473_001:0371b24_3": "微塵剎土。",
    "X74n1473_001:0371b24_4": "十方三世一切諸佛。",
    "X74n1473_001:0371b26_0": "一心頂禮。",
    "X74n1473_001:0371b26_1": "大方廣佛華嚴經。",
    "X74n1473_001:0371b26_2": "剖裂玄微。",
    "X74n1473_001:0371b26_3": "一乘別教。",
    "X74n1473_001:0371b26_4": "汪洋悉備。",
    "X74n1473_001:0371b27_5": "十二分經。",
    "X74n1473_001:0371c01_0": "一心頂禮。",
    "X74n1473_001:0371c01_1": "菩提場中。",
    "X74n1473_001:0371c01_2": "佛果會主。",
    "X74n1473_001:0371c01_3": "發明十願。",
    "X74n1473_001:0371c01_4": "徧收玄妙。",
    "X74n1473_001:0371c02_0": "普賢菩薩摩訶薩(說行願主。",
    "X74n1473_001:0371c02_1": "此當三拜)。",
    "X74n1473_001:0371c03_0": "一心頂禮。",
    "X74n1473_001:0371c03_1": "普光明殿。",
    "X74n1473_001:0371c03_2": "十信會主。",
    "X74n1473_001:0371c03_3": "十首菩薩摩訶薩。",
    "X74n1473_001:0371c04_0": "一心頂禮。",
    "X74n1473_001:0371c04_1": "忉利天宮。",
    "X74n1473_001:0371c04_2": "十住會主。",
    "X74n1473_001:0371c04_3": "十慧菩薩摩訶薩。",
    "X74n1473_001:0371c05_0": "一心頂禮。",
    "X74n1473_001:0371c05_1": "夜摩天宮。",
    "X74n1473_001:0371c05_2": "十行會主。",
    "X74n1473_001:0371c05_3": "十林菩薩摩訶薩。",
    "X74n1473_001:0371c06_0": "一心頂禮。",
    "X74n1473_001:0371c06_1": "兜率天宮。",
    "X74n1473_001:0371c06_2": "十向會主。",
    "X74n1473_001:0371c06_3": "十幢菩薩摩訶薩。",
    "X74n1473_001:0371c07_0": "一心頂禮。",
    "X74n1473_001:0371c07_1": "他化天宮。",
    "X74n1473_001:0371c07_2": "十地會主。",
    "X74n1473_001:0371c07_3": "金剛藏菩薩摩訶薩。",
    "X74n1473_001:0371c08_0": "一心頂禮。",
    "X74n1473_001:0371c08_1": "重會普光明殿。",
    "X74n1473_001:0371c08_2": "顯彰因圓果滿。",
    "X74n1473_001:0371c08_3": "如來性起。",
    "X74n1473_001:0371c09_0": "妙德菩薩摩訶薩。",
    "X74n1473_001:0371c10_0": "一心頂禮。",
    "X74n1473_001:0371c10_1": "三會普光明殿。",
    "X74n1473_001:0371c10_2": "開發進修成行。",
    "X74n1473_001:0371c10_3": "善慧菩薩摩訶薩。",
    "X74n1473_001:0371c12_0": "一心頂禮。",
    "X74n1473_001:0371c12_1": "逝多林中。",
    "X74n1473_001:0371c12_2": "證入法界。",
    "X74n1473_001:0371c12_3": "如來之前。",
    "X74n1473_001:0371c12_4": "文殊師利菩薩摩訶薩。",
    "X74n1473_001:0371c14_0": "一心頂禮。",
    "X74n1473_001:0371c14_1": "末會之主。",
    "X74n1473_001:0371c14_2": "五十五員。",
    "X74n1473_001:0371c14_3": "真善知識。",
    "X74n1473_001:0371c14_4": "權實菩薩摩訶薩。",
    "X74n1473_001:0371c16_0": "一心頂禮。",
    "X74n1473_001:0371c16_1": "圓根上器。",
    "X74n1473_001:0371c16_2": "修證軌範。",
    "X74n1473_001:0371c16_3": "百城求法。",
    "X74n1473_001:0371c16_4": "一生克備。",
    "X74n1473_001:0371c17_0": "善財菩薩摩訶薩。",
    "X74n1473_001:0371c18_0": "一心頂禮。",
    "X74n1473_001:0371c18_1": "應跡淨邦。",
    "X74n1473_001:0371c18_2": "觀自在菩薩。",
    "X74n1473_001:0371c18_3": "大勢至菩薩。",
    "X74n1473_001:0371c18_4": "彌勒菩薩。",
    "X74n1473_001:0371c19_5": "馬鳴龍樹諸祖菩薩。",
    "X74n1473_001:0371c19_6": "及十方三世。",
    "X74n1473_001:0371c19_7": "一切菩薩摩訶薩。",
    "X74n1473_001:0371c21_0": "一心頂禮。",
    "X74n1473_001:0371c21_1": "會末之中。",
    "X74n1473_001:0371c21_2": "舍利弗等六千比丘。",
    "X74n1473_001:0371c21_3": "盡虗空界。",
    "X74n1473_001:0371c22_0": "微塵剎中。",
    "X74n1473_001:0371c22_1": "有學無學。",
    "X74n1473_001:0371c22_2": "一切聲聞緣覺賢聖僧。",
    "X74n1473_001:0371c23_0": "修行五悔第八",
    "X74n1473_001:0371c24_0": "(然此五中。",
    "X74n1473_001:0371c24_1": "先明懺悔者。",
    "X74n1473_001:0371c24_2": "以罪有性遮。",
    "X74n1473_001:0371c24_3": "懺有事理。",
    "X74n1473_001:0371c24_4": "事懺如方等佛名等經。",
    "X74n1473_001:0372a01_5": "通於萬行。",
    "X74n1473_001:0372a01_6": "必須懇禱禮敬。",
    "X74n1473_001:0372a01_7": "十方諸佛。",
    "X74n1473_001:0372a02_8": "披陳罪相。",
    "X74n1473_001:0372a02_9": "責心媿切。",
    "X74n1473_001:0372a02_10": "理懺如淨名經。",
    "X74n1473_001:0372a02_11": "觀罪性空。",
    "X74n1473_001:0372a02_12": "不在內外。",
    "X74n1473_001:0372a03_13": "但發菩提心。",
    "X74n1473_001:0372a03_14": "自然推滅。",
    "X74n1473_001:0372a03_15": "恒沙煩惱。",
    "X74n1473_001:0372a03_16": "理事雙明然後利他。",
    "X74n1473_001:0372a04_17": "修餘四悔。",
    "X74n1473_001:0372a04_18": "耳)。",
    "X74n1473_001:0372a05_0": "一明懺悔法",
    "X74n1473_001:0372a06_0": "(既禮佛竟。",
    "X74n1473_001:0372a06_1": "正身威儀。",
    "X74n1473_001:0372a06_2": "虔敬胡跪。",
    "X74n1473_001:0372a06_3": "右膝着地。",
    "X74n1473_001:0372a06_4": "燒諸名香。",
    "X74n1473_001:0372a07_0": "存想普賢菩薩。",
    "X74n1473_001:0372a07_1": "無量莊嚴。",
    "X74n1473_001:0372a07_2": "眷屬圍繞。",
    "X74n1473_001:0372a07_3": "為懺悔主。",
    "X74n1473_001:0372a07_4": "如對目前。",
    "X74n1473_001:0372a08_5": "一心一意。",
    "X74n1473_001:0372a08_6": "生重慚愧。",
    "X74n1473_001:0372a08_7": "發露無量劫來。",
    "X74n1473_001:0372a08_8": "所造一切惡業。",
    "X74n1473_001:0372a09_9": "既除業障。",
    "X74n1473_001:0372a09_10": "成淨戒善。",
    "X74n1473_001:0372a09_11": "是故經文。",
    "X74n1473_001:0372a09_12": "徧名懺業。",
    "X74n1473_001:0372a09_13": "實則三障四障。",
    "X74n1473_001:0372a10_14": "無不皆懺。",
    "X74n1473_001:0372a10_15": "應一心想云。",
    "X74n1473_001:0372a10_16": "我與眾生。",
    "X74n1473_001:0372a10_17": "無始所作。",
    "X74n1473_001:0372a11_18": "一切罪障。",
    "X74n1473_001:0372a11_19": "惟願三寶。",
    "X74n1473_001:0372a11_20": "哀憫拔濟。",
    "X74n1473_001:0372a11_21": "頓袪愚業。",
    "X74n1473_001:0372a11_22": "翻作淨因。",
    "X74n1473_001:0372a12_23": "身心齊空。",
    "X74n1473_001:0372a12_24": "罪福無主。",
    "X74n1473_001:0372a12_25": "了見真性。",
    "X74n1473_001:0372a12_26": "等佛法身。",
    "X74n1473_001:0372a12_27": "三業罪愆。",
    "X74n1473_001:0372a13_28": "成三解脫。",
    "X74n1473_001:0372a13_29": "六根重障反作六通。",
    "X74n1473_001:0372a13_30": "想已萬朗聲唱云)。",
    "X74n1473_001:0372a14_0": "普為四恩三有。",
    "X74n1473_001:0372a14_1": "及法界眾生。",
    "X74n1473_001:0372a14_2": "悉願斷除諸障。",
    "X74n1473_001:0372a14_3": "歸命懺悔。",
    "X74n1473_001:0372a16_0": "(唱已起拜。",
    "X74n1473_001:0372a16_1": "當運逆順十心。",
    "X74n1473_001:0372a16_2": "默想清凉偈云。",
    "X74n1473_001:0372a16_3": "自從無始起無明。",
    "X74n1473_001:0372a17_4": "亦直惡友增我情。",
    "X74n1473_001:0372a17_5": "無隨喜心善永滅。",
    "X74n1473_001:0372a17_6": "縱身語意惡漸生。",
    "X74n1473_001:0372a18_7": "心心徧布觸處染。",
    "X74n1473_001:0372a18_8": "念念相續日夜營。",
    "X74n1473_001:0372a18_9": "不欲人知藏過失。",
    "X74n1473_001:0372a19_10": "不畏惡道任縱橫。",
    "X74n1473_001:0372a19_11": "無慚無愧魔羅網。",
    "X74n1473_001:0372a19_12": "撥因撥果闡提坑。",
    "X74n1473_001:0372a20_13": "如是順流背本已。",
    "X74n1473_001:0372a20_14": "生死苦海浩然盈幸識由來長者子。",
    "X74n1473_001:0372a21_15": "今欲逆流捨貧里。",
    "X74n1473_001:0372a21_16": "正信因果破闡提慚愧人天破無恥。",
    "X74n1473_001:0372a22_17": "恐怖惡道破不畏。",
    "X74n1473_001:0372a22_18": "發露罪業破覆[土*此]斷想續心破常念。",
    "X74n1473_001:0372a23_19": "發菩提心破徧起。",
    "X74n1473_001:0372a23_20": "修功補過破縱恣。",
    "X74n1473_001:0372a24_21": "守護正法破無喜。",
    "X74n1473_001:0372a24_22": "念十方佛破惡友。",
    "X74n1473_001:0372a24_23": "觀罪性空破結使上之六偈。",
    "X74n1473_001:0372a25_24": "初三順生死十心。",
    "X74n1473_001:0372a25_25": "以為所治。",
    "X74n1473_001:0372a25_26": "後三逆生死十心。",
    "X74n1473_001:0372a26_27": "從後翻破。",
    "X74n1473_001:0372a26_28": "應當熟誦默想。",
    "X74n1473_001:0372a26_29": "次作是言)。",
    "X74n1473_001:0372a27_0": "我比丘(某甲)至心懺悔。",
    "X74n1473_001:0372a27_1": "我與法界。",
    "X74n1473_001:0372a27_2": "一切眾生。",
    "X74n1473_001:0372a27_3": "應當自念。",
    "X74n1473_001:0372a28_4": "已於過去。",
    "X74n1473_001:0372a28_5": "無始劫中。",
    "X74n1473_001:0372a28_6": "由貪瞋痴。",
    "X74n1473_001:0372a28_7": "發身口意。",
    "X74n1473_001:0372a28_8": "作諸惡業。",
    "X74n1473_001:0372a29_9": "無量無邊。",
    "X74n1473_001:0372a29_10": "若此惡業。",
    "X74n1473_001:0372a29_11": "有體相者。",
    "X74n1473_001:0372a29_12": "盡虗空界。",
    "X74n1473_001:0372a29_13": "不能容受。",
    "X74n1473_001:0372a30_14": "我今悉以清淨三業。",
    "X74n1473_001:0372a30_15": "徧於法界。",
    "X74n1473_001:0372a30_16": "極微塵剎。",
    "X74n1473_001:0372a30_17": "一切諸佛菩薩眾前。",
    "X74n1473_001:0372a31_18": "誠心懺悔。",
    "X74n1473_001:0372a31_19": "後不復造。",
    "X74n1473_001:0372a31_20": "恒住淨戒。",
    "X74n1473_001:0372a31_21": "一切功德。",
    "X74n1473_001:0372b01_22": "我今又念愚痴所盲。",
    "X74n1473_001:0372b01_23": "造罪無窮。",
    "X74n1473_001:0372b01_24": "障佛法因。",
    "X74n1473_001:0372b01_25": "開闡提路。",
    "X74n1473_001:0372b02_26": "違背聖意。",
    "X74n1473_001:0372b02_27": "隨逐惡緣。",
    "X74n1473_001:0372b02_28": "棄捨菩提。",
    "X74n1473_001:0372b02_29": "躭玩生死。",
    "X74n1473_001:0372b02_30": "於出離法。",
    "X74n1473_001:0372b03_31": "無一念心。",
    "X74n1473_001:0372b03_32": "諸苦毒因。",
    "X74n1473_001:0372b03_33": "長夜積習。",
    "X74n1473_001:0372b03_34": "染汙無學。",
    "X74n1473_001:0372b03_35": "及親非親。",
    "X74n1473_001:0372b04_36": "於出家人。",
    "X74n1473_001:0372b04_37": "搖罵責訶。",
    "X74n1473_001:0372b04_38": "惡法交游。",
    "X74n1473_001:0372b04_39": "污穢塔寺。",
    "X74n1473_001:0372b04_40": "毀犯齋戒。",
    "X74n1473_001:0372b05_41": "縱蕩身心。",
    "X74n1473_001:0372b05_42": "嫉諸善人。",
    "X74n1473_001:0372b05_43": "逆害師長。",
    "X74n1473_001:0372b05_44": "有愛有痴。",
    "X74n1473_001:0372b05_45": "無慚無愧。",
    "X74n1473_001:0372b06_46": "我等自惟微善。",
    "X74n1473_001:0372b06_47": "報在人倫。",
    "X74n1473_001:0372b06_48": "幸值釋迦像季。",
    "X74n1473_001:0372b06_49": "遺法出家學道。",
    "X74n1473_001:0372b07_50": "未能發明教觀淵旨。",
    "X74n1473_001:0372b07_51": "自利利他。",
    "X74n1473_001:0372b07_52": "雖為義學。",
    "X74n1473_001:0372b07_53": "講習章門。",
    "X74n1473_001:0372b08_54": "取相乖宗。",
    "X74n1473_001:0372b08_55": "違文背理。",
    "X74n1473_001:0372b08_56": "譽自毀他。",
    "X74n1473_001:0372b08_57": "虗消信施。",
    "X74n1473_001:0372b08_58": "解脫律儀。",
    "X74n1473_001:0372b09_59": "常多缺犯。",
    "X74n1473_001:0372b09_60": "或為四重。",
    "X74n1473_001:0372b09_61": "或為偷蘭遮。",
    "X74n1473_001:0372b09_62": "乃至重輕一切罪障。",
    "X74n1473_001:0372b10_63": "當淪苦趣。",
    "X74n1473_001:0372b10_64": "惟願三寶。",
    "X74n1473_001:0372b10_65": "本尊毗盧遮那。",
    "X74n1473_001:0372b10_66": "行願懺主。",
    "X74n1473_001:0372b11_67": "普賢菩薩。",
    "X74n1473_001:0372b11_68": "哀憫護念。",
    "X74n1473_001:0372b11_69": "愛我懺悔。",
    "X74n1473_001:0372b11_70": "翻三毒心。",
    "X74n1473_001:0372b11_71": "成三秘藏。",
    "X74n1473_001:0372b12_72": "普與眾生。",
    "X74n1473_001:0372b12_73": "咸登真界。",
    "X74n1473_001:0372b13_0": "(起立聲",
    "X74n1473_001:0372b14_0": "德者云)。",
    "X74n1473_001:0372b15_0": "懺悔已。",
    "X74n1473_001:0372b15_1": "歸命禮普賢菩薩。",
    "X74n1473_001:0372b15_2": "及一切三寶(同禮一拜)。",
    "X74n1473_001:0372b16_0": "二明勸請法",
    "X74n1473_001:0372b17_0": "(此下行願。",
    "X74n1473_001:0372b17_1": "並依行願偈文。",
    "X74n1473_001:0372b17_2": "昔慈雲式師。",
    "X74n1473_001:0372b17_3": "集往生淨土儀。",
    "X74n1473_001:0372b18_4": "亦采此經諸偈。",
    "X74n1473_001:0372b18_5": "以為方法耳。",
    "X74n1473_001:0372b18_6": "然慈勸請。",
    "X74n1473_001:0372b18_7": "除謗法障。",
    "X74n1473_001:0372b19_0": "起慈善根。",
    "X74n1473_001:0372b19_1": "聲聞自度。",
    "X74n1473_001:0372b19_2": "但懺而已。",
    "X74n1473_001:0372b19_3": "菩薩愍眾。",
    "X74n1473_001:0372b19_4": "必須勸請諸佛普雨。",
    "X74n1473_001:0372b20_5": "自他沾洽)。",
    "X74n1473_001:0372b21_0": "我比丘(某甲)至心勸請。",
    "X74n1473_001:0372b22_0": "　十方所有世間燈　　最初成就菩提者　我今一切皆勸請　　轉於無上妙法輪　諸佛若欲示涅槃　　我悉至誠而勸請　惟願久住剎塵劫　　利樂一切諸眾生勸請已。",
    "X74n1473_001:0372b26_1": "歸命禮普賢菩薩。",
    "X74n1473_001:0372b26_2": "及一切三寶。",
    "X74n1473_001:0372c01_0": "三明隨喜法",
    "X74n1473_001:0372c02_0": "(經文隨喜四類功德。",
    "X74n1473_001:0372c02_1": "由昔不喜他善故。",
    "X74n1473_001:0372c03_0": "今隨喜。",
    "X74n1473_001:0372c03_1": "為慶悅彼。",
    "X74n1473_001:0372c03_2": "除嫉妒障。",
    "X74n1473_001:0372c03_3": "起平等善)。",
    "X74n1473_001:0372c04_0": "我比丘(某甲)至心隨喜。",
    "X74n1473_001:0372c05_0": "　十方一切諸眾生　　二乘有學及無學　一切如來與菩薩　　所有功德皆隨喜隨喜已。",
    "X74n1473_001:0372c07_1": "歸命禮普賢菩薩。",
    "X74n1473_001:0372c07_2": "及一切三寶。",
    "X74n1473_001:0372c08_0": "四明迴向法",
    "X74n1473_001:0372c09_0": "(經文正明。",
    "X74n1473_001:0372c09_1": "廻向眾生。",
    "X74n1473_001:0372c09_2": "令成菩提。",
    "X74n1473_001:0372c09_3": "除挾劣障。",
    "X74n1473_001:0372c10_4": "生廣大善。",
    "X74n1473_001:0372c10_5": "盡於法界。",
    "X74n1473_001:0372c10_6": "義同實際)。",
    "X74n1473_001:0372c11_0": "我比丘(某甲)至心迴向。",
    "X74n1473_001:0372c12_0": "　所有禮讚供養福　　請佛住世轉法輪　隨喜懺悔諸善根　　迴向眾生及佛道(廻向已歸命禮普賢菩薩及一切三寶)。",
    "X74n1473_001:0372c15_0": "五明發願法",
    "X74n1473_001:0372c16_0": "(若按經文。",
    "X74n1473_001:0372c16_1": "十種皆明廣大行願。",
    "X74n1473_001:0372c16_2": "故此發願。",
    "X74n1473_001:0372c17_0": "除退障。",
    "X74n1473_001:0372c17_1": "得總持諸行。",
    "X74n1473_001:0372c17_2": "速成佛果矣)。",
    "X74n1473_001:0372c18_0": "我比丘(某甲)至心發願。",
    "X74n1473_001:0372c19_0": "　身口意業恒清淨　　諸行剎土亦復然　如是智慧號普賢　　願我與彼皆同等發願已。",
    "X74n1473_001:0372c21_1": "歸命禮普賢菩薩。",
    "X74n1473_001:0372c21_2": "及一切三寶。",
    "X74n1473_001:0372c22_0": "旋繞稱念第九",
    "X74n1473_001:0372c23_0": "南無十方佛",
    "X74n1473_001:0372c24_0": "南無十方法",
    "X74n1473_001:0372c25_0": "南無十方僧",
    "X74n1473_001:0373a01_0": "南無十身初滿盧舍那佛",
    "X74n1473_001:0373a02_0": "南無皆蒙授記阿彌陀佛",
    "X74n1473_001:0373a03_0": "南無華藏世界微塵諸佛",
    "X74n1473_001:0373a04_0": "南無大方廣佛華嚴經",
    "X74n1473_001:0373a05_0": "南無發明行願普賢菩薩",
    "X74n1473_001:0373a06_0": "南無洞彰信解文殊師利菩薩",
    "X74n1473_001:0373a07_0": "南無七處九會諸大菩薩",
    "X74n1473_001:0373a08_0": "南無諸善知識善財菩薩",
    "X74n1473_001:0373a09_0": "南無十方一切菩薩摩訶薩",
    "X74n1473_001:0373a10_0": "(稱諸佛菩薩名字。",
    "X74n1473_001:0373a10_1": "旋繞三匝。",
    "X74n1473_001:0373a10_2": "或七匝畢。",
    "X74n1473_001:0373a11_0": "然後誦經。",
    "X74n1473_001:0373a11_1": "誦經規式在後。",
    "X74n1473_001:0373a11_2": "誦經畢唱云)。",
    "X74n1473_001:0373a12_0": "自歸於佛。",
    "X74n1473_001:0373a12_1": "當願眾生。",
    "X74n1473_001:0373a12_2": "紹隆佛種。",
    "X74n1473_001:0373a12_3": "發無上意。",
    "X74n1473_001:0373a13_0": "自歸於法。",
    "X74n1473_001:0373a13_1": "當願眾生。",
    "X74n1473_001:0373a13_2": "深入經藏。",
    "X74n1473_001:0373a13_3": "智慧如海。",
    "X74n1473_001:0373a14_0": "自歸依僧。",
    "X74n1473_001:0373a14_1": "當願眾生。",
    "X74n1473_001:0373a14_2": "統理大眾。",
    "X74n1473_001:0373a14_3": "一切無礙。",
    "X74n1473_001:0373a14_4": "和南聖眾誦經規式第十若脩一席懺法。",
    "X74n1473_001:0373a16_5": "祇於道場中諷(或誦十重梵網戒相。",
    "X74n1473_001:0373a16_6": "或誦行願)。",
    "X74n1473_001:0373a16_7": "應當覺了誦經之聲。",
    "X74n1473_001:0373a17_8": "性空身寂。",
    "X74n1473_001:0373a17_9": "如雲如影。",
    "X74n1473_001:0373a17_10": "舉足下足。",
    "X74n1473_001:0373a18_0": "心無所得。",
    "X74n1473_001:0373a18_1": "不住行步之相。",
    "X74n1473_001:0373a18_2": "幻影全空。",
    "X74n1473_001:0373a18_3": "即真法性。",
    "X74n1473_001:0373a18_4": "故我此身。",
    "X74n1473_001:0373a19_5": "影現十方。",
    "X74n1473_001:0373a19_6": "充滿法界。",
    "X74n1473_001:0373a19_7": "無不普徧。",
    "X74n1473_001:0373a19_8": "誦經既畢。",
    "X74n1473_001:0373a20_0": "當至佛前。",
    "X74n1473_001:0373a20_1": "唱三歸依。",
    "X74n1473_001:0373a20_2": "右旋而出。",
    "X74n1473_001:0373a20_3": "若於新歲之初。",
    "X74n1473_001:0373a20_4": "聖制之前。",
    "X74n1473_001:0373a21_5": "以七日為期。",
    "X74n1473_001:0373a21_6": "乃至七七日。",
    "X74n1473_001:0373a21_7": "隨意堪任。",
    "X74n1473_001:0373a21_8": "須於道場外。",
    "X74n1473_001:0373a22_9": "別置禪觀堂。",
    "X74n1473_001:0373a22_10": "諷誦經文。",
    "X74n1473_001:0373a22_11": "當使文句分明。",
    "X74n1473_001:0373a22_12": "言辭辯了。",
    "X74n1473_001:0373a23_13": "運此法音。",
    "X74n1473_001:0373a23_14": "徧至十方。",
    "X74n1473_001:0373a23_15": "供養三寶。",
    "X74n1473_001:0373a23_16": "普施眾生。",
    "X74n1473_001:0373a24_0": "令其悉證一切諸佛。",
    "X74n1473_001:0373a24_1": "毗盧遮那如來藏身三昧。",
    "X74n1473_001:0373a24_2": "法界海旋。",
    "X74n1473_001:0373b03_0": "華嚴普賢行願修證儀(終)"
}