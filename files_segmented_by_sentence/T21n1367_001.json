[
    {
        "source_sentence": "佛說大普賢陀羅尼經",
        "from": "T21n1367_001:0884c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附梁錄",
        "from": "T21n1367_001:0884c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在舍衛國祇樹給孤獨園。",
        "from": "T21n1367_001:0884c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時佛告阿難。",
        "from": "T21n1367_001:0884c26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今說大普賢呪。",
        "from": "T21n1367_001:0884c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當受持。",
        "from": "T21n1367_001:0884c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多擲多　阿咤　那咤　茶彌茶　遮居梨　居梨茶也　居梨茶也拔坻　思提　思陀　婆夢坻阿難此大普賢呪。",
        "from": "T21n1367_001:0884c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遮滅一切兵刃。",
        "from": "T21n1367_001:0885a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切怨仇。",
        "from": "T21n1367_001:0885a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切夜叉羅剎復多等畏。",
        "from": "T21n1367_001:0885a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切不得食下鬼名。",
        "from": "T21n1367_001:0885a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡摩兜一烏奢睺睺胡摩兜二阿㝹羯卑胡摩兜三破波羅胡摩兜四莎呵五。",
        "from": "T21n1367_001:0885a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪水七遍與病人飲之。",
        "from": "T21n1367_001:0885a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腰脚痛鬼名呼盧兜一波吒羅呼盧兜二毘魔羅呼盧兜三彌梨耆梨卑呼盧兜四莎呵五。",
        "from": "T21n1367_001:0885a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪三色縷青黃綠。",
        "from": "T21n1367_001:0885a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結作七結。",
        "from": "T21n1367_001:0885a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫脚腕次繫髀後繫腰。",
        "from": "T21n1367_001:0885a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭痛鬼名胡摩兜摩呵迦吒羅一毘摩迦吒羅二呼呼羅迦吒羅三伊呼迦吒羅四伊未迦知迦吒羅五莎呵六。",
        "from": "T21n1367_001:0885a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七遍呪楊枝打二七下。",
        "from": "T21n1367_001:0885a15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "闇鈍鬼名哹吒吒一浮律置浮吒吒二阿支拏呼吒吒三浮律置支呼吒吒四伊呼破羅支呼吒吒五私蜜兜伊呼支破羅六莎呵七。",
        "from": "T21n1367_001:0885a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三七遍呪七日日三遍。",
        "from": "T21n1367_001:0885a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳痛鬼名比膩波一阿制置毘膩波二呼膩置毘膩波三伊呼支膩置膩波四耆摩膩毘膩波五莎呵六。",
        "from": "T21n1367_001:0885a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月生一日。",
        "from": "T21n1367_001:0885a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使左耳痛南向坐。",
        "from": "T21n1367_001:0885a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右耳痛北向坐。",
        "from": "T21n1367_001:0885a26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東向門病人門內坐呪師門外坐。",
        "from": "T21n1367_001:0885a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水亦門外二七遍三𠹀之。",
        "from": "T21n1367_001:0885a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淋鬼名破波羅一浮梨浮梨置破波羅二車慕那破波羅三呼呼羅車波羅四。",
        "from": "T21n1367_001:0885b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熱病鬼神病。",
        "from": "T21n1367_001:0885b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方道蠱毒呪術。",
        "from": "T21n1367_001:0885b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘多茶富多那等。",
        "from": "T21n1367_001:0885b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子善女人所至之處。",
        "from": "T21n1367_001:0885b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行道中若水道中若急難處應念此呪。",
        "from": "T21n1367_001:0885b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有夜叉復多毘舍遮拘槃茶迦吒富多那羅剎毘多茶等畏。",
        "from": "T21n1367_001:0885b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又無水火刀杖兵凶毒藥衰害呪術方道一切諸惡人非人等如是諸畏。",
        "from": "T21n1367_001:0885b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難若有恐怖急難。",
        "from": "T21n1367_001:0885b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應誦念此呪。",
        "from": "T21n1367_001:0885b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無能作衰惱者。",
        "from": "T21n1367_001:0885b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難若有受持讀誦此呪。",
        "from": "T21n1367_001:0885b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上天龍鬼神二十八部人非人等。",
        "from": "T21n1367_001:0885b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能越犯此呪。",
        "from": "T21n1367_001:0885b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵輪金剛輪當為作苦患。",
        "from": "T21n1367_001:0885b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令頭破作七分。",
        "from": "T21n1367_001:0885b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四方四維上下若。",
        "from": "T21n1367_001:0885b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有於此人起惡心者。",
        "from": "T21n1367_001:0885b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆繫其毒心令不發起。",
        "from": "T21n1367_001:0885b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子善女人。",
        "from": "T21n1367_001:0885b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應善讀誦執持奉行。",
        "from": "T21n1367_001:0885b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大普賢陀羅尼經",
        "from": "T21n1367_001:0885b15_100",
        "context_with_next_sentence": false
    }
]