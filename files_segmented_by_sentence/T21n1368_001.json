[
    {
        "source_sentence": "佛說大七寶陀羅尼經",
        "from": "T21n1368_001:0885b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附梁錄",
        "from": "T21n1368_001:0885b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在祇樹給孤窮精舍。佛告",
        "from": "T21n1368_001:0885b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T21n1368_001:0885b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝受持此大七寶陀羅尼呪。",
        "from": "T21n1368_001:0885b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即便說之。",
        "from": "T21n1368_001:0885b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寫地也貸曇　坻闍律提　波羅若　波羅　式叉仇拏　比茶阿難若有受持讀誦修行此陀羅尼呪。",
        "from": "T21n1368_001:0885b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡其形命一切怨仇能令歡喜。",
        "from": "T21n1368_001:0885b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火不能燒刀不能傷水不能溺。",
        "from": "T21n1368_001:0885b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無方道鬼魅所持。",
        "from": "T21n1368_001:0885b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若天龍阿修羅乾闥婆乃至人非人等。",
        "from": "T21n1368_001:0885c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難此七寶呪。",
        "from": "T21n1368_001:0885c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若至水火中若怨賊中。",
        "from": "T21n1368_001:0885c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若食毒若方道毒。",
        "from": "T21n1368_001:0885c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應念此呪。",
        "from": "T21n1368_001:0885c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若怖畏毛豎等悉得解脫。",
        "from": "T21n1368_001:0885c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以毘婆尸佛威德尸棄神力。",
        "from": "T21n1368_001:0885c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比尸婆智慧拘婁孫佛力。",
        "from": "T21n1368_001:0885c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦那牟尼戒。",
        "from": "T21n1368_001:0885c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉功德。",
        "from": "T21n1368_001:0885c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦牟尼精進。",
        "from": "T21n1368_001:0885c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切眾生悉除怖畏。",
        "from": "T21n1368_001:0885c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得安吉。",
        "from": "T21n1368_001:0885c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時阿難聞佛所說歡喜奉行。",
        "from": "T21n1368_001:0885c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大七寶陀羅尼經",
        "from": "T21n1368_001:0885c07_100",
        "context_with_next_sentence": false
    }
]