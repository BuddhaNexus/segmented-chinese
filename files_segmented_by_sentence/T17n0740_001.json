[
    {
        "source_sentence": "佛說頞多和多耆經",
        "from": "T17n0740_001:0543a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人今附西晉錄",
        "from": "T17n0740_001:0543a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是：一時佛在為耶國時有多樹木處，與",
        "from": "T17n0740_001:0543a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾比丘僧俱，比丘有五百人。",
        "from": "T17n0740_001:0543a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月十五日盛滿時，夜半寂然安靜，比丘僧自相難問。",
        "from": "T17n0740_001:0543a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時栴檀調弗天人，持天形狀威神光耀來，直前趣佛。",
        "from": "T17n0740_001:0543a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至佛前已，悉脫身上珍寶著一面，但披一領衣，前以頭面著佛足，禮畢問佛言：",
        "from": "T17n0740_001:0543b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸可過去佛正覺弟子有經，經名《頞多和多耆》，佛弟子今亦復說是頞多和多耆經。",
        "from": "T17n0740_001:0543b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願佛為我說是經，當使弟子奉持。",
        "from": "T17n0740_001:0543b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛默然不應。",
        "from": "T17n0740_001:0543b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "栴檀調弗稽首而却坐。",
        "from": "T17n0740_001:0543b06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛即為比丘僧說經言：",
        "from": "T17n0740_001:0543b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我為若說《頞多和多耆經》，皆聽著心中，念之勿得忘。",
        "from": "T17n0740_001:0543b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」比丘言：",
        "from": "T17n0740_001:0543b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「願佛說，我皆當受經戒。",
        "from": "T17n0740_001:0543b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0740_001:0543b08_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「布施有八事。",
        "from": "T17n0740_001:0543b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂為八？",
        "from": "T17n0740_001:0543b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡人布施但布施，不知其恩善所在。",
        "from": "T17n0740_001:0543b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既布施不達世間無有常，癡人持作常。",
        "from": "T17n0740_001:0543b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間苦無極，愚人持作樂。",
        "from": "T17n0740_001:0543b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間所有，愚人言『是我所有，可常得』。",
        "from": "T17n0740_001:0543b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間人皆顛倒，不淨、臭處、惡露，愚人用作好；",
        "from": "T17n0740_001:0543b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知作善得善，作惡得惡，愚人施與人，不知其人德深淺，持善心施與得道者，福不可量。",
        "from": "T17n0740_001:0543b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告諸比丘：",
        "from": "T17n0740_001:0543b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何以知愚人不知布施？",
        "from": "T17n0740_001:0543b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有十因緣。",
        "from": "T17n0740_001:0543b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T17n0740_001:0543b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人布施不知為尊，自用所與者得善；",
        "from": "T17n0740_001:0543b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人不至心施與人也；",
        "from": "T17n0740_001:0543b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人既施與人，與時不敬重；",
        "from": "T17n0740_001:0543b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自手與，傳教人與，施人不欲望其福；",
        "from": "T17n0740_001:0543b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不即得其福者，自用忘其福；",
        "from": "T17n0740_001:0543b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人施與佛、辟支佛、阿羅漢，不能自知其福大；",
        "from": "T17n0740_001:0543b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人施與，不信佛、辟支佛、阿羅漢、阿那含、斯陀含、須陀洹；",
        "from": "T17n0740_001:0543b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆用為棄損，無有後生；",
        "from": "T17n0740_001:0543b23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人施與，欲但得名字，欲使人稱譽。",
        "from": "T17n0740_001:0543b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為愚人布施。",
        "from": "T17n0740_001:0543b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說經已，栴檀調弗及諸比丘，皆歡喜，前為佛作禮。",
        "from": "T17n0740_001:0543b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說頞多和多耆經",
        "from": "T17n0740_001:0543b27_100",
        "context_with_next_sentence": false
    }
]