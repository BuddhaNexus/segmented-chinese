[
    {
        "source_sentence": "佛說觀自在菩薩母陀羅尼經",
        "from": "T20n1117_001:0506a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T20n1117_001:0506a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T20n1117_001:0506a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T20n1117_001:0506a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在廣嚴城。",
        "from": "T20n1117_001:0506a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘眾舍利子等五百人俱。",
        "from": "T20n1117_001:0506a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有慈氏等大菩薩眾。",
        "from": "T20n1117_001:0506a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬圍繞敷座而坐。",
        "from": "T20n1117_001:0506a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中有一菩薩名曰普賢。",
        "from": "T20n1117_001:0506b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起詣世尊前。",
        "from": "T20n1117_001:0506b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T20n1117_001:0506b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛白言世尊。",
        "from": "T20n1117_001:0506b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有觀自在菩薩母陀羅尼大明章句。",
        "from": "T20n1117_001:0506b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是過去現在未來諸佛世尊隨喜宣說。",
        "from": "T20n1117_001:0506b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我佛世尊為菩薩時。",
        "from": "T20n1117_001:0506b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求正等正覺利益眾生故。",
        "from": "T20n1117_001:0506b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦曾宣說此陀羅尼。",
        "from": "T20n1117_001:0506b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復此陀羅尼。",
        "from": "T20n1117_001:0506b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與求菩薩善男子善女人為父為母。",
        "from": "T20n1117_001:0506b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如孤獨而得依怙。",
        "from": "T20n1117_001:0506b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無主宰者當得主宰。",
        "from": "T20n1117_001:0506b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼陀羅尼若人讀誦得已受持者。",
        "from": "T20n1117_001:0506b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪業悉得消滅。",
        "from": "T20n1117_001:0506b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切行願皆得圓滿。",
        "from": "T20n1117_001:0506b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至修諸大明亦獲成就。",
        "from": "T20n1117_001:0506b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告普賢菩薩言。",
        "from": "T20n1117_001:0506b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誠如汝說。",
        "from": "T20n1117_001:0506b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念往昔。",
        "from": "T20n1117_001:0506b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為菩薩時。",
        "from": "T20n1117_001:0506b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求正等正覺。",
        "from": "T20n1117_001:0506b12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度如誐鵝沙數無量無邊世界。",
        "from": "T20n1117_001:0506b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有佛土名蘇珂嚩帝。",
        "from": "T20n1117_001:0506b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼土有佛號無量壽如來應供正等正覺。",
        "from": "T20n1117_001:0506b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是無量壽佛於今現在。",
        "from": "T20n1117_001:0506b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常說妙法利益眾生。",
        "from": "T20n1117_001:0506b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於彼會為婆羅門名自在光。",
        "from": "T20n1117_001:0506b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我時已得證發光地。",
        "from": "T20n1117_001:0506b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼會中已曾宣說此觀自在菩薩母陀羅尼。",
        "from": "T20n1117_001:0506b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與百千那由他無量無邊眾生作大利益。",
        "from": "T20n1117_001:0506b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時在會中一切大眾。",
        "from": "T20n1117_001:0506b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是陀羅尼已。",
        "from": "T20n1117_001:0506b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有罪業者皆悉消滅。",
        "from": "T20n1117_001:0506b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得宿命智者獲宿命智。",
        "from": "T20n1117_001:0506b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復告普賢菩薩言。",
        "from": "T20n1117_001:0506b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝為利益當來末法五濁惡世。",
        "from": "T20n1117_001:0506b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千俱胝無量無邊。",
        "from": "T20n1117_001:0506b22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造無間業罪惡眾生得罪消滅。",
        "from": "T20n1117_001:0506b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令孤獨者有依怙故。",
        "from": "T20n1117_001:0506b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲隨喜宣說觀自在菩薩母陀羅尼。",
        "from": "T20n1117_001:0506b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉汝可宣說。",
        "from": "T20n1117_001:0506b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩蒙佛許已。",
        "from": "T20n1117_001:0506b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說觀自在菩薩母陀羅尼曰。",
        "from": "T20n1117_001:0506b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨引婆誐嚩帝阿彌多引婆引野一怛他引誐多引野二阿囉曷二合帝三藐三沒馱引野三曩謨阿引哩野二合引嚩路吉帝說囉引野四冒地薩埵引野引摩賀引薩埵野引五摩賀引迦引嚕尼迦引野引六帝毘喻二合曩莫塞訖哩三合埵七伊𤚥切身阿引哩野二合引嚩路吉帝說囉摩旦引八摩賀引陀囉尼滿怛囉二合鉢那引儞九三鉢囉二合嚩叉也二合彌伊彌引尾𭔞切身三蜜哩二合殿覩十怛𭔞他引十一伊彌十二彌㘑引十三唧㘑引十四彌㘑引十五崑多羅十六崑多㘑引十七尸哩引十八尸尸哩引十九藕哩二十誐埵引哩二十一摩登儗二十二補葛西二十三葛吒引野二十四摩賀引尾𭔞二十五昏怛摩引㘑𩕳二十六唧㘑二十七𩕳唧㘑引二十八虞呬也二合二十九搔藐捺哩捨儞引三十捺哩伽二合摩引曩摩引儞三十一阿引哩野二合引諾叱拏普𡁠仁際切三十二薩哩嚩二合尾𭔞引難引鉢囉二合尾設也二合彌三十三薩哩嚩二合𭔞引儞引彌引說哩莎引賀引三十四爾時普賢菩薩說是陀羅尼已。",
        "from": "T20n1117_001:0506c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T20n1117_001:0506c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人至心受持。",
        "from": "T20n1117_001:0506c17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有罪業悉皆消滅。",
        "from": "T20n1117_001:0506c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切怖畏時常得擁護。",
        "from": "T20n1117_001:0506c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人欲求見我及諸成就者。",
        "from": "T20n1117_001:0506c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當加精進心不間斷。",
        "from": "T20n1117_001:0506c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日三時專注持誦。",
        "from": "T20n1117_001:0506c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至滿七日我愍是人為現本身。",
        "from": "T20n1117_001:0506c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復行人如是專注。",
        "from": "T20n1117_001:0506c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不間斷默念一月。",
        "from": "T20n1117_001:0506c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得觀自在菩薩出現本身施所求願。",
        "from": "T20n1117_001:0506c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至得見無量壽佛。",
        "from": "T20n1117_001:0506c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞增長證宿命智。",
        "from": "T20n1117_001:0506c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處不離佛法具大富貴。",
        "from": "T20n1117_001:0506c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至獲得不退轉地。",
        "from": "T20n1117_001:0506c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經已。",
        "from": "T20n1117_001:0506c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢菩薩摩訶薩及諸菩薩聲聞等。",
        "from": "T20n1117_001:0506c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切會眾聞佛所說。",
        "from": "T20n1117_001:0506c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T20n1117_001:0506c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說觀自在菩薩母陀羅尼經",
        "from": "T20n1117_001:0506c28_100",
        "context_with_next_sentence": false
    }
]