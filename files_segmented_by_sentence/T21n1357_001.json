[
    {
        "source_sentence": "佛說師子奮迅菩薩所問經",
        "from": "T21n1357_001:0875b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失譯人名今附東晉錄",
        "from": "T21n1357_001:0875b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在阿耨大池邊龍王宮中。",
        "from": "T21n1357_001:0875b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大比丘僧五百人俱。",
        "from": "T21n1357_001:0875b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大菩薩眾滿足千人。",
        "from": "T21n1357_001:0875b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得陀羅尼。",
        "from": "T21n1357_001:0875b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住於十地應紹尊位。",
        "from": "T21n1357_001:0875b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一生當得阿耨多羅三藐三菩提。",
        "from": "T21n1357_001:0875b15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸法界通達無礙。",
        "from": "T21n1357_001:0875b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大莊嚴而自莊嚴。",
        "from": "T21n1357_001:0875b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛智德心無疑滯。",
        "from": "T21n1357_001:0875b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時有一菩薩。",
        "from": "T21n1357_001:0875b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名師子奮迅。",
        "from": "T21n1357_001:0875b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來在會坐。",
        "from": "T21n1357_001:0875b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起整衣服。",
        "from": "T21n1357_001:0875b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩右膝著地。",
        "from": "T21n1357_001:0875b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛白佛言。",
        "from": "T21n1357_001:0875b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若有眾生。",
        "from": "T21n1357_001:0875b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以敬信心供養佛者得幾許福。",
        "from": "T21n1357_001:0875b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告師子奮迅菩薩言。",
        "from": "T21n1357_001:0875b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子莫作是言。",
        "from": "T21n1357_001:0875b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T21n1357_001:0875b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若供養佛論其福聚無量無邊。",
        "from": "T21n1357_001:0875b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1357_001:0875b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來成就無量戒身定身慧身解脫身解脫知見身故。",
        "from": "T21n1357_001:0875b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子奮迅若有眾生見一切智。",
        "from": "T21n1357_001:0875b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨信心供養恭敬尊重讚歎。",
        "from": "T21n1357_001:0875b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施諸所安衣服飲食臥具醫藥安身所須。",
        "from": "T21n1357_001:0875b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如是等現在供養。",
        "from": "T21n1357_001:0875b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人於佛滅後供養舍利如芥子許。",
        "from": "T21n1357_001:0875b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是二人福正等無異。",
        "from": "T21n1357_001:0875b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次師子奮迅。",
        "from": "T21n1357_001:0875b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有在家菩薩。",
        "from": "T21n1357_001:0875b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以如須彌山等七寶聚。",
        "from": "T21n1357_001:0875b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養聲聞緣覺乘人。",
        "from": "T21n1357_001:0875b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有出家修道之人。",
        "from": "T21n1357_001:0875b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因菩提心持一小錢以用布施。",
        "from": "T21n1357_001:0875c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此福勝前百分千分。",
        "from": "T21n1357_001:0875c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬億分阿僧祇分不可稱計。",
        "from": "T21n1357_001:0875c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "算數譬喻所不能及。",
        "from": "T21n1357_001:0875c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次師子奮迅。",
        "from": "T21n1357_001:0875c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生百千歲中。",
        "from": "T21n1357_001:0875c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切樂具現在供養於佛世尊。",
        "from": "T21n1357_001:0875c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有一人於佛滅後。",
        "from": "T21n1357_001:0875c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以一華供養如來。",
        "from": "T21n1357_001:0875c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若掃灑佛塔若塗治塔地。",
        "from": "T21n1357_001:0875c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香然燈幡蓋伎樂以供養佛。",
        "from": "T21n1357_001:0875c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言。",
        "from": "T21n1357_001:0875c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無佛陀。",
        "from": "T21n1357_001:0875c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無量阿僧祇劫備修苦行。",
        "from": "T21n1357_001:0875c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集諸功德成等正覺。",
        "from": "T21n1357_001:0875c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益成就無量眾生。",
        "from": "T21n1357_001:0875c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如是起真實心供養佛者。",
        "from": "T21n1357_001:0875c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人於後若一劫若百劫若千萬劫。",
        "from": "T21n1357_001:0875c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不墮惡道。",
        "from": "T21n1357_001:0875c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次師子奮迅。",
        "from": "T21n1357_001:0875c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有陀羅尼名曰花聚。",
        "from": "T21n1357_001:0875c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為欲利益安樂饒益多眾生故。",
        "from": "T21n1357_001:0875c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐愍世間利安天人故。",
        "from": "T21n1357_001:0875c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今當說之。",
        "from": "T21n1357_001:0875c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子奮迅若有受持此花聚陀羅尼者。",
        "from": "T21n1357_001:0875c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人常得宿命智通。",
        "from": "T21n1357_001:0875c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後終不墮三惡道中。",
        "from": "T21n1357_001:0875c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生無難處不離三寶。",
        "from": "T21n1357_001:0875c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不生於下賤之家不離念佛。",
        "from": "T21n1357_001:0875c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所往受生諸根不缺。",
        "from": "T21n1357_001:0875c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生不失菩提之心。",
        "from": "T21n1357_001:0875c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生得種種甚深辯才。",
        "from": "T21n1357_001:0875c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常見十方阿僧祇佛。",
        "from": "T21n1357_001:0875c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說此陀羅尼。",
        "from": "T21n1357_001:0875c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多噠咃　屠邏濘　陀羅尼　牟濘　波邏娑散濘　悉題戰題攡　那牟支　涅呵攡盧伽波𠽮　佛𠽮波提　𠽮攡　迦羅𫪦郁迦吒羅殊波竭汦　汦殊波𠽮　肥舍　邏佛提　旦摩婆嘶　阿叉蛇兮　波伽汦　阿滅律多兮　波休多題汦殊伐　𠽮呢𠽮蛇　三摩頞汦　汦殊伽邏伐𠽮　𠽮拏佛提　因提利蛇佛提　莎訶師子奮迅。",
        "from": "T21n1357_001:0876a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞是花聚陀羅尼名。",
        "from": "T21n1357_001:0876a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以淨信心憶念誦持。",
        "from": "T21n1357_001:0876a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲修行者。",
        "from": "T21n1357_001:0876a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應用二月三月八月行之。",
        "from": "T21n1357_001:0876a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從月八日修念佛心乃至十五日。",
        "from": "T21n1357_001:0876a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝三時夜三時一心念佛。",
        "from": "T21n1357_001:0876a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香花燈明供養三寶。",
        "from": "T21n1357_001:0876a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至十五日見一切佛。",
        "from": "T21n1357_001:0876a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘蓮華座而為說法。",
        "from": "T21n1357_001:0876a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得陀羅尼憶念堅固意志明了。",
        "from": "T21n1357_001:0876a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是以後乃至菩提。",
        "from": "T21n1357_001:0876a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所聞憶持不忘。",
        "from": "T21n1357_001:0876a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切經書工巧伎術一切三昧。",
        "from": "T21n1357_001:0876a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心得清淨除見四諦。",
        "from": "T21n1357_001:0876a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1357_001:0876a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法無漏所攝故。",
        "from": "T21n1357_001:0876a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是法時。",
        "from": "T21n1357_001:0876a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子奮迅菩薩。",
        "from": "T21n1357_001:0876a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸菩薩比丘。",
        "from": "T21n1357_001:0876a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍夜叉乾闥婆阿修羅世人非人。",
        "from": "T21n1357_001:0876a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說歡喜奉行。",
        "from": "T21n1357_001:0876a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說師子奮迅菩薩所問經",
        "from": "T21n1357_001:0876a14_100",
        "context_with_next_sentence": false
    }
]