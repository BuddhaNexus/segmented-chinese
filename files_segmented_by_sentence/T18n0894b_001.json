[
    {
        "source_sentence": "蘇悉地羯羅供養法卷第一",
        "from": "T18n0894b_001:0704b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏法師善無畏譯",
        "from": "T18n0894b_001:0704b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命諸如來，　　及法菩薩眾，",
        "from": "T18n0894b_001:0704b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華金剛部，　　并諸眷屬等。",
        "from": "T18n0894b_001:0704b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今依教說，　　供養持誦法，",
        "from": "T18n0894b_001:0704b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "省略通三部，　　次第及相應。",
        "from": "T18n0894b_001:0704b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先觀神室處，　　復明其事法；",
        "from": "T18n0894b_001:0704b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對受得真言，　　及作手印法；",
        "from": "T18n0894b_001:0704b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於外出入處，　　分土洗淨法；",
        "from": "T18n0894b_001:0704b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑掃神室處，　　除萎華等法，",
        "from": "T18n0894b_001:0704b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及淨供養器，　　然後往澡浴；",
        "from": "T18n0894b_001:0704b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作三摩耶，　　繫縛為障者，",
        "from": "T18n0894b_001:0704b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除及護身，　　光澤水等法；",
        "from": "T18n0894b_001:0704b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澡浴自灌頂，　　獻三掬水法；",
        "from": "T18n0894b_001:0704b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往於神室門，　　換衣灑身法；",
        "from": "T18n0894b_001:0704b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入室便禮拜，　　辦諸供具法；",
        "from": "T18n0894b_001:0704b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數珠及神線、　　茅環牛五淨，",
        "from": "T18n0894b_001:0704b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻閼伽水，　　及置其座法；",
        "from": "T18n0894b_001:0704b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復視三摩耶，　　去身障難法；",
        "from": "T18n0894b_001:0704b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除及去垢，　　清淨光澤法；",
        "from": "T18n0894b_001:0704b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身及結界，　　八方上下法；",
        "from": "T18n0894b_001:0704c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初應想神座，　　觀念本尊法；",
        "from": "T18n0894b_001:0704c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所在方處，　　奉請本尊法；",
        "from": "T18n0894b_001:0704c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以其本真言，　　啟請本尊已，",
        "from": "T18n0894b_001:0704c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即除遣從魔，　　奉座令坐法；",
        "from": "T18n0894b_001:0704c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復視三摩耶，　　即奉閼伽水，",
        "from": "T18n0894b_001:0704c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "浴尊奉衣法；",
        "from": "T18n0894b_001:0704c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　次獻塗香華、燒香及飲食、　　燃燈供養法；",
        "from": "T18n0894b_001:0704c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言并手印，　　運心供養法；",
        "from": "T18n0894b_001:0704c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎懺悔等，　　護尊及己身、",
        "from": "T18n0894b_001:0704c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并護其處所，　　便結大界法；",
        "from": "T18n0894b_001:0704c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備具拔折羅，　　及數珠等法；",
        "from": "T18n0894b_001:0704c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "充滿真言分，　　次坐持誦法；",
        "from": "T18n0894b_001:0704c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求請本所願，　　及護所念誦，",
        "from": "T18n0894b_001:0704c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴施功德法，　　起廣大發願；",
        "from": "T18n0894b_001:0704c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又奉閼伽水，　　塗燒香等法；",
        "from": "T18n0894b_001:0704c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復視三摩耶，　　護身及己身，",
        "from": "T18n0894b_001:0704c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解所結方界，　　然後發遣法；",
        "from": "T18n0894b_001:0704c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩支分等，　　謂爐神及地，",
        "from": "T18n0894b_001:0704c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒祀之具法；",
        "from": "T18n0894b_001:0704c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　轉讀方廣經，及作制底法；",
        "from": "T18n0894b_001:0704c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　次作慈等觀，思惟六念法。",
        "from": "T18n0894b_001:0704c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如是等次第，我今略詮竟。",
        "from": "T18n0894b_001:0704c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見神室處者，謂入漫荼羅，散華所墮，歸依彼尊。",
        "from": "T18n0894b_001:0704c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明其事法者，謂得最勝受明灌頂，奉阿闍梨之所印可，令傳法灌頂、乃至令作息災等諸餘灌頂。",
        "from": "T18n0894b_001:0704c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對受真言及手印者，謂受法人澡浴清淨，著新潔衣，於其淨處䠒跪，恭敬對阿闍梨，親受真言及作手印。",
        "from": "T18n0894b_001:0705a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿闍梨先誦三遍，轉授與彼。",
        "from": "T18n0894b_001:0705a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼受得已，自誦三遍，深生歡喜，頂戴奉持，此為對受。",
        "from": "T18n0894b_001:0705a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力所辦奉施阿闍梨，廣解法已，方可作此念誦次第也。",
        "from": "T18n0894b_001:0705a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外出入處者，謂晨朝起已，所往穢處皆用受觸忿怒真言而作護身。",
        "from": "T18n0894b_001:0705a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0705a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄥏句􄕻路􄖩拕曩上聲􇩴𤙖􈆲若」其手印相，以右手作拳，直竪大指，當護五處——謂頂、兩肩、心及咽上。",
        "from": "T18n0894b_001:0705a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分土洗淨者，謂以五聚土當洗下部、以三聚土洗小便處、以三聚土觸洗左手、以七聚土共洗兩手，或恐未淨，任意洗之，以淨為限。",
        "from": "T18n0894b_001:0705a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其三聚土以受觸真言及用手印印土，持誦經一七遍然後用也，次以真言而用灑身。",
        "from": "T18n0894b_001:0705a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0705a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄗽羅􈊫尼上􆿁𤙖􄚳訶誦三反之」其手印相，以右手仰掌直舒五指，指𨄥相博，次屈無名指中節與掌相當，以大母指屈輔頭指根下向前。",
        "from": "T18n0894b_001:0705a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其灑水法，令面向東，蹲踞而默然，兩手置於雙膝之間，手印掬水，勿有泡沫，無聲飲之。",
        "from": "T18n0894b_001:0705a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三度飲已，然後用手霑水，兩度拭脣。",
        "from": "T18n0894b_001:0705a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "于時口中於其齒間舌觸垢穢，噴啑、欬嗽，更復如前飲水拭脣，還以此印及誦真言，先觸兩目，次口、兩耳、鼻、及兩肩、喉、臍、心、咽、頂上，便成護身諸根清淨。",
        "from": "T18n0894b_001:0705b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑掃神室者，謂隨其成就及事差別與彼相應，而擇方處及意所樂無諸障難。",
        "from": "T18n0894b_001:0705b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其地除去嚩弭羅、蟲窠、坑窟瓦礫、糠骨毛髮、鹹炭灰等，掘去惡土，填以淨土，於上造室，堅牢密作勿令風入，門向東開，或北，或西，隨事向南。",
        "from": "T18n0894b_001:0705b06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作神室已，用牛糞塗，以淨水灑之、或以塗香即和淨水，當誦此明而塗其地。",
        "from": "T18n0894b_001:0705b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰：",
        "from": "T18n0894b_001:0705b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩那􄗥莽􈉆娑底􄗱𭋺也三合􄽳儞尾二合􄑀迦引􈁀難去􄙺薩􅞣囉嚩􄕗怛􄕤他去􄑘蘖􄕗哆􈁀難去三􈂵闇􄙘尾􄗽囉􄒸而􄙘尾􄗽囉􄒸而􄗥摩􄚩訶􄑼作􄥇訖羅二合􄙖嚩􄦿日哩􄙺薩􄕗多􄙺薩􄕗多􄙺娑去􄗽囉􄕝帝􄙺娑􄗽囉􄕝帝􄩞怛囉二合􄗷以􄩞怛羅􄗳以􄙘尾􄕻陀􄗥莽􄖫寧􄚦三􄗣伴􄒶若􄖫寧􄕗多􄗽囉􄗥莽􄕙底􄙼悉􇧺陀􄥡仡隷􄩨怛㘕􅁥莎􄚩訶」或時忘念、法則錯誤，犯三摩耶，每日當誦此明三、七遍、或一百八遍，能除其過。",
        "from": "T18n0894b_001:0705b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除萎華者，供養尊華已，先誦此明除其萎華。",
        "from": "T18n0894b_001:0705b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰：",
        "from": "T18n0894b_001:0705b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􅁦濕尾􄕝帝􄗥摩􄚩訶􅁦濕尾􄕝帝􄑌佉􄕯娜􄖯寧􅁥莎去􄚩訶」次說掃地明。",
        "from": "T18n0894b_001:0705c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰：",
        "from": "T18n0894b_001:0705c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄚩賀􄗽羅􄚩賀􄗽羅􄗽囉􄒾茹􄥟㜸囉二合􄚩賀􄗽囉􄕍那􄗱也􅁥莎􄚩訶」次說塗地明。",
        "from": "T18n0894b_001:0705c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰：",
        "from": "T18n0894b_001:0705c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄑀羯􄗾囉引􄙐隷􄗥摩􄚩訶􄑀羯􄗾羅􄙐隷􅁥莎􄚩訶三遍誦」先應灑掃神室，除去萎華，淨諸供器，然後方去澡浴，教說如是。",
        "from": "T18n0894b_001:0705c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往澡浴時，先以此明及手印護諸供養具，然後可往。",
        "from": "T18n0894b_001:0705c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰：",
        "from": "T18n0894b_001:0705c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄙤尸􄑌却􄗽囉􄙖嚩􄦿日哩􆿓闇三遍誦」其手印相，以右手作拳，直竪大指，頭指、二指相著，遍觸供具加持。",
        "from": "T18n0894b_001:0705c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作三摩耶者，謂凡作法先作三摩耶，然後作護身等一切諸事，教如是說。",
        "from": "T18n0894b_001:0705c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說三摩耶真言及手印。",
        "from": "T18n0894b_001:0705c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初佛部真言曰：",
        "from": "T18n0894b_001:0705c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄕗怛􄕤他去􄑘㜸􄕟妬􆹊娜婆二合􄙗嚩引􄗱也􅁥莎􄚩訶誦三遍」其手印相，仰兩手十指直向前舒並側相著，微屈二頭指上節，此是佛部三摩耶印。",
        "from": "T18n0894b_001:0705c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說蓮華部三摩耶真言及手印。",
        "from": "T18n0894b_001:0705c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0705c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄖵鉢􅇚娜謨二合􆹊娜婆二合􄙗嚩引􄗱也􅁥莎􄚩訶誦三遍之」其手印相，先當合掌，中間兩六指向外舒散，勿令相著，其大指及小指兩手依舊相著，合掌中虛如間敷蓮華，微屈中間六指，此是蓮華部三摩耶印。",
        "from": "T18n0894b_001:0706a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說金剛部三摩耶真言及手印。",
        "from": "T18n0894b_001:0706a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0706a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄙖嚩􄧅日路二合􆹊娜婆二合􄙗嚩引􄗱也􅁥莎􄚩訶誦三遍之」其手印相，右押左，兩手背逆相著，以右手大指差其左手小指，左手大指差其右手小指，中間兩手六指微令開，如三股杵，此是金剛三摩耶印。",
        "from": "T18n0894b_001:0706a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結縛諸難者，謂以軍荼利手印、真言而縛諸難。",
        "from": "T18n0894b_001:0706a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其手印相，左手置於右膊上，以大指捻小指甲，展中三指如三股杵。",
        "from": "T18n0894b_001:0706a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以右手置於左膊上，亦以大指捻小指甲，展中三指如三股杵。",
        "from": "T18n0894b_001:0706a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面向東立，屈左脚膝，臨身向前就於左脚，闊展右脚二尺以來橫躡地，咬其右下近脣邊，怒目左視，默想自身如軍荼利，誦其根本真言曰：",
        "from": "T18n0894b_001:0706a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩囊􄗭謨􄗽囉􅑈怛囊􄩞怛囉􄗲夜􄗱野􄖩囊􄗥莽􈂽室􆧽戰拏􄙖嚩􄦽日囉􄖵簸􄕍儜􄗷曳􄗥莽􄚩訶􄗱藥􄚴乞沙􄚢細􄖩囊􄖵鉢􄕗多􄗷曳􄖩囊􄗭謨􄙖嚩􄦽日囉二合􄥏句路二合􄕻馱􄗱野引􄕹能􈇒瑟吒路二合􈋥得羯二合􄓚吒􄗙婆􄗱也􄗠珮􄗽囉􄙖嚩引􄗱野􆿅阿􄙼徙􈁃母􄗥薩􄗽羅􄪼鉢囉􄙦戍􄖵跛􄙢捨􄚨訶􆶳娑多二合􄗱野􄕗怛􇩊姪􄕤他􇩂唵􆿅闇􇩸沒㗚􄕗多􄑄軍􆧽拏􄙌里􄑌佉􄑌佉􄑌佉􄑌佉􄑌却􄚪醯􄑌却引􄚪醯􄕙底􆵋瑟咤􄕙底􆵋瑟咤􄙖滿􄾫馱􄙖滿􄾫馱􄚩訶􄖩囊􄚩訶􄖩囊􄑘蘖􅗭囉惹二合􄑘蘖􅗭囉惹二合􄙘微􆷲娑鋪􄓚吒􄗱野􄙘微􆷲娑鋪􄓚吒􄗱野􄙺薩囉􅞣嚩二合􄙘尾􅍕近囊二合􄙘微近􅍕囊􄗱野􄑊劍􄗥摩􄚩訶􄑘伽􄕋儜􄖵鉢􄕙底􄒹餌􄙘尾􄕡旦􄕗多􄑀迦􄗽囉􄗱野􆿁𤙖􄗁泮􈁆吒誦七遍之」此真言後置滿馱滿馱句，即以兩手三指便收作拳把相捻指，餘並依舊，其諸難者便成結縛。",
        "from": "T18n0894b_001:0706b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次，澡浴法者，為淨身故，先取淨土分作三聚，以真言、手印各持誦之。",
        "from": "T18n0894b_001:0706b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰三玄妙印在之：",
        "from": "T18n0894b_001:0706b21_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄖫寧􄑌佉􄖩囊􄙖嚩􈂼蘇􄖣提􅁥莎􄚩訶五遍誦之，此是淨土真言」其手印相，兩手相叉，指捻手背，雙竪二頭指相著，二大母指並竪，博頭指側。",
        "from": "T18n0894b_001:0706b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此手印觸所取土，誦真言五遍然後取之。",
        "from": "T18n0894b_001:0706b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次，辟除者，凡所作諸事先須辟除，然後方作一切諸事，教說如是。",
        "from": "T18n0894b_001:0706b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除真言曰：",
        "from": "T18n0894b_001:0706b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩囊􄗭謨􄙖嚩􄦽日囉􄗱也􆿁𤙖􄚨賀􄖩囊􈃁鈍􄖩囊􄗥莽􄕻他􄙘尾􈆮跢崩􄙺娑􄗵瑜􄙺瑳􄗽囉􄗱也􆿁𤙖􄗁泮􈁆吒誦七遍之，此是辟除真言」其手印相，以左手大指屈入掌中，以中指、無名指而押大指，屈其頭指著中指中節側，亦屈小指著無名指中節側，即舒努臂，頭上右轉三遍及印身五處，右手大指押小指甲，餘三指直竪，作嚩日囉形，叉其腰側，立法如前，此是辟除印。",
        "from": "T18n0894b_001:0706c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又，辟除真言及手印。",
        "from": "T18n0894b_001:0706c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0706c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄙖嚩􄦽日囉􄕗多􄗽囉􆿁𤙖􄗁泮􈁆吒是辟除真言」其手印相，以右手拍左手掌，如是三遍，是辟除手印。",
        "from": "T18n0894b_001:0706c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又，辟除真言及手印。",
        "from": "T18n0894b_001:0706c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0706c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄑂唵枳􄙌里􄑂枳􄙊羅􄗽囉􄙖嚩􄙇咾􄩶捺囉􆿁𤙖􄗁泮􈁆吒辟除真言」其手印相，以右手彈三遍，是辟除手印。",
        "from": "T18n0894b_001:0706c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次，護身法者，以此真言及手印用結十方界及以護身。",
        "from": "T18n0894b_001:0706c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0706c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄙢商􄑀迦􄗽𭋺􄚦三􄗥莽􄗻焰􅁥莎􄚩訶是護身結界真言」其手印相，以右手大指捻小指甲上，餘三指微開直竪，名嚩日囉印，用結上下及八方界并用護身。",
        "from": "T18n0894b_001:0706c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言、手印用印自身，以水、土、澡豆等物便成去垢及與清淨。",
        "from": "T18n0894b_001:0706c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0706c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄑂枳􄙌里􄑂枳􄙌里􄙖嚩􄦽日囉􆿁𤙖􄗁泮􈁆吒七遍誦之，去垢真言」其手印相，以右手大指捻小指甲上，餘三指微開直竪，叉腰間，三指向前，左手亦作此印，用觸諸物，即成去垢及與清淨，此是去垢手印。",
        "from": "T18n0894b_001:0707a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以軍荼利真言及手印用作清淨。",
        "from": "T18n0894b_001:0707a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􆿓闇􇩸沒㗚􄕗帝􈅼𤙖􄗁泮􈁆吒」其手印相，以右手作拳取水，念誦七遍，用灑諸物及身頂上便成清淨，此是作清淨印其拳四指勿令著掌。",
        "from": "T18n0894b_001:0707a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印用作光澤。",
        "from": "T18n0894b_001:0707a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􈁊入嚩􄙊攞􈁊入嚩􄙊攞􄗱也􄙖縛􆯯納􄙀哩􅁥莎縛􄚩訶誦三遍之，是光澤真言」其手印相，以左手大指捻小指甲上，餘三指微開直竪，舒其肘，還以右手作此印承左手肘下，以左手印印觸諸物及以己身即成光澤，是光澤印。",
        "from": "T18n0894b_001:0707a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印用攪其水。",
        "from": "T18n0894b_001:0707a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􆿁𤙖􄚨賀􄖩囊􄙖嚩􄦿日哩二合􄙖嚩􄧃日𭋺二合􄕋拏􄚩訶攪水真言」其手印相，兩手向外相叉，屈著手背，以二大指屈在掌中，二頭指稍屈頭，甲相著，是攪水印。",
        "from": "T18n0894b_001:0707b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印取土塗身。",
        "from": "T18n0894b_001:0707b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄗞部􅿣囉若三合􄗽嚩􆿁𤙖誦七遍之，是塗身真言」其手印相，取土和水，兩手大指各押小指甲上，餘指散開更互相揩，以右手遍塗身上，是塗土洗身印。",
        "from": "T18n0894b_001:0707b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以軍荼利真言、手印持誦水真言，曰：",
        "from": "T18n0894b_001:0707b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􆿅闇􇩸沒㗚􄕝帝􆿁𤙖􄗁泮􈁆吒誦七遍之」其手印相，先平舒右手，先屈中指、無名指押大指甲上，稍屈頭指及小指在中指無名指側，持誦真言，以印攪水，澡浴印誦水印。",
        "from": "T18n0894b_001:0707b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印遣除身中毘那夜迦難。",
        "from": "T18n0894b_001:0707b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􆿅闇􇩸沒㗚二合􄕝帝􄚨賀􄖩囊􄚨賀􄖩囊􆿁𤙖􄗁泮􈁆吒除身中毘那夜迦」其手印相，以兩手大指屈入掌中，各各作拳，舒二頭指，左右相叉入虎口中，以印從頂向下至足而略去，此是遣除身中毘那夜迦印。",
        "from": "T18n0894b_001:0707b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次則應以軍荼利真言及手印護身五處。",
        "from": "T18n0894b_001:0707b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄙖嚩􄦽日囉􄑘祇寧􄪼鉢囉􄕯儞􆻥鉢多􄗱也􅁥莎􄚩訶護身真言」其手印相，以二小指相叉入掌中，二無名指雙押二小指竪，二中指頭側相跓，二頭指微屈，在中指上節側相去一大麥許直竪，二大指在中指側，印觸五處即成護身，是護身印。",
        "from": "T18n0894b_001:0707c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印持誦一一分土。",
        "from": "T18n0894b_001:0707c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􆯯度􄖷比􆯯度􄖷比􄑁迦􄗱也􆯯度􄙘比􄪼鉢囉􈁊餌嚩二􄙌里􄖫寧􅁥莎􄚩訶三遍誦真言」其手印相，以二手頭指及小指令頭相跓，以二中指、二無名指屈入掌中，其二手相背不令相著，以二大指頭側相著，前所置三聚土取一分，以印印土，持誦三遍用洗，從足至臍，即洗其手，用水灑淨；",
        "from": "T18n0894b_001:0707c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二、第三亦如是洗及以灑淨。",
        "from": "T18n0894b_001:0707c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取一聚，如前持誦，用洗從臍至頸；",
        "from": "T18n0894b_001:0707c14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取一聚，如前持誦，用洗從頸至頂。",
        "from": "T18n0894b_001:0707c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢已，還誦真言及作手印。",
        "from": "T18n0894b_001:0707c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意澡洗還作此印，亦誦真言，並其手印遍轉於身，當心身後解印，是名被甲印。",
        "from": "T18n0894b_001:0707c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是誦土印。",
        "from": "T18n0894b_001:0707c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦軍荼利根本真言，以手攪水隨意澡浴。",
        "from": "T18n0894b_001:0707c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0707c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩囊􄗭謨􄗽囉􅑈怛囊􄩞怛囉􄗲夜􄗱也􄖩那􄗰莽􈂽室戰􆧽拏􄙖嚩􄦽日囉􄖵簸􄕍儜􄗷曳􄗥摩􄚩訶􄗱藥􄚴乞沙􄚢細􄖩囊􄖵鉢􄕗多􄗷曳􄖩那􄗭謨􄙖嚩􄦽日囉􄥏句路􄕼駝􄗱也􄪼鉢囉􈁊若嚩􄙊里􄕗多􄕱儞􆻤鉢多􄕹能􈅰瑟吒嚕􈁌得迦􄓚吒􄗙婆􄗱也􄗠珮􄗽囉􄙖嚩􄗱也􆿅阿􄙼徙􇩸母􄙺娑􄙊囉􄙖嚩􄦽日囉二合􄖵鉢􄗽囉􄙧輸􄖵波􄙢捨􄚨賀􆶩娑多􄗱也􄕗怛􇩊姪也􄕣他􇩂唵􆿓闇􇩸沒㗚􄕗多􄑄軍􄓺拏􄙌里􄑌佉􄑌佉􄑌佉􄑌佉􄑌佉􄖩囊􄑌佉􄖩囊􄑌佉􄖩囊􄑌佉􄖩囊􄑌佉􄕯陀􄑌佉􄕯陀􄑌佉􄕯陀􄑌佉􄕯陀􄑌佉􄑂呬􄑌佉􄑂呬􄑌佉􄑂呬􄑌佉􄑂呬􄕙底􆵋瑟吒􄕙底􆱠瑟咤􄚨賀􄖩囊􄚨賀􄖩囊􄕯娜􄚨賀􄕯娜􄚨賀􄖵鉢􄑼者􄖵鉢􄑼者􈃈蘖㗚􄚨訶􄕋拏􈃈蘖㗚􄗁訶􄕋拏二合􄙖滿􇧹馱􄙖滿􇧹馱􄑘蘖􅗭囉若􄑘蘖􅗭㗚惹􄩞怛囉􄒶若􄩞怛囉􄒶若􄙘微􆷹娑鋪􄓚吒􄗱也􄙘微􆷹婆鋪􄓚吒􄗱也􄗙婆􄑌伽􄙠梵􄖩囊􇩸沒㗚􄕗多􄑄軍􄕘拏􄙌里􈁃母􄙀㗚􄕗馱􄖳喃􄕗多􄖭拏􄗱也􄙖嚩􄦽日𭋺􄕋拏􄙺薩􅞣囉嚩􄙘微􅍕伽那􄗱也􄙘微􄖩那􄗱也􈂾劍􄖫寧􄙖嚩􄗽羅􄗱也􄗥摩􄚨訶􄑌伽􄖩儜􄖵鉢􄕙底􄒶餌􄙘尾􈁀難􄕗多􄑁迦􄗽囉􄗱也􆿁𤙖􆿁𤙖􄗁泮􄓚吒􄗁泮􄓚吒􄥏句嚕􄕻馱􅍉根囊􄗷曳􅁥莎􄚩訶誦三遍」其自灌頂者，以此真言及手印而自灌頂。",
        "from": "T18n0894b_001:0708b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0708b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄚳賀二合􄑌佉􄙊里􄙊里􆿁𤙖􄗁泮􈁆吒誦三遍，是灌頂真言」其手印相，二小指相叉入掌中，二無名指雙押二小指叉上直竪，二中指頭側令相跓，以二頭指在頭指側，以印取水，持誦真言三遍而自灌頂，此是灌頂印。",
        "from": "T18n0894b_001:0708b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印而自結髮。",
        "from": "T18n0894b_001:0708b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0708b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􈁴唵􄙺蘇􄙼悉􇧻地􄑀羯􄙀哩􅁥莎縛􄚩訶三誦三遍，通三部用」其手印相，右手作拳，直舒大指，以頭指押大指頭上令使縛圓曲，作此手印持誦真言三遍已，置於頂上即成結髮印。",
        "from": "T18n0894b_001:0708b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部結髮真言曰：",
        "from": "T18n0894b_001:0708b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙢尸􄑌祇􄙤尸􄑘契􅁥莎縛􄚩訶三誦三遍」蓮華部結髮真言曰：",
        "from": "T18n0894b_001:0708b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙤尸􄑎契􅁥莎縛􄚩訶三誦三遍」金剛部結髮真言曰：",
        "from": "T18n0894b_001:0708b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙤尸􄑌佉􄣢寫􅁥莎縛􄚩訶三誦三遍」凡洗浴時，不應就於淤泥水中、或水有㓨、或峻岸水、或狹渠淺水、旋渦忽是流、多蟲渾水、溉灌田水、及坑中水……，如是之水並勿洗浴。",
        "from": "T18n0894b_001:0708b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復不應於其水中及以水側大小便利，不得於水中跳走、忽行、浮沒等戲。",
        "from": "T18n0894b_001:0708b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正在水中勿視隱處，亦不思想婦人隱處、及與嬭腰、諸餘支分，應當寂靜默然洗浴，但令去垢，勿為嚴身之想。",
        "from": "T18n0894b_001:0708c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獻三掬水者，洗浴了已，面向本尊所居之方觀念本尊，持誦真言及作手印，以印掬水而獻三掬，想浴本尊及奉閼伽或於水中，隨意念誦，方詣道場。",
        "from": "T18n0894b_001:0708c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部獻水真言曰：",
        "from": "T18n0894b_001:0708c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄕝帝􄗽囉􄙐𭋺􈎭佛哺特反􇧹陀􅁥莎嚩􄚩訶三誦三遍，奉三掬水」蓮華部獻水真言曰：",
        "from": "T18n0894b_001:0708c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄗛避􄙀哩􄗛避􄙀哩􆿁𤙖􄗁泮􄓚吒三誦三遍，奉三掬水」金剛部獻水真言曰：",
        "from": "T18n0894b_001:0708c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙘微􈂫濕嚩二合􄙖嚩􄧃日𭋺二合􅁥莎嚩􄚩訶誦三遍奉掬水」其手印相，平仰兩手，側相著，以二頭指捻二大指頭，六指微屈，以印掬水，持誦真言，三度奉浴本尊，此通三部奉三掬水印。",
        "from": "T18n0894b_001:0708c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻已訖、澡浴又畢，所詰諸印應須解之。",
        "from": "T18n0894b_001:0708c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以阿三忙祇寧真言，手印左轉即成解結。",
        "from": "T18n0894b_001:0708c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0708c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􄙺三􄗯忙􄑚祇􄕍寧􄮥訖𠼝引咽聲􆿁吽􄗁泮􈁆吒此是解界真言」其手印相，以右手背置左掌內，令無縫𨄥，二大指向上直竪，左轉一遍解所結印往於道場者，謂入向道場之時勿起瞋恚及與貪欲，專念本尊而往去之。",
        "from": "T18n0894b_001:0708c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於神室中不應踏過種種器仗及諸藥草——謂種種器、騎乘、鈴鐸、及諸印具、萎華藥味、一切草木皆不應踏——制底尊像、比丘等影皆不應踏，亦勿乘騎象、馬、駱駝、牛、羊、驢等及一切諸乘皆不應乘及身手觸。",
        "from": "T18n0894b_001:0709a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若犯此等，墮三麼耶，亦不應起貪、瞋、癡、慢、掉舉、憍等。",
        "from": "T18n0894b_001:0709a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當著木履而往道場中，遇制底尊容、師長，當脫木履便申致敬，方至道場。",
        "from": "T18n0894b_001:0709a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灑身換衣者，謂至道場門外而立，洗手及足，用前所說真言、手印重更飲水並灑淨之。",
        "from": "T18n0894b_001:0709a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部飲水灑淨真言曰：",
        "from": "T18n0894b_001:0709a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄗥摩􄚩訶去􄺸入嚩二合􄙊囉􆿁𤙖」蓮華部飲水灑淨真言曰：",
        "from": "T18n0894b_001:0709a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄕛覩􄕛覩􄙊羅􄑄俱􄙂嚕􄑄俱􄙂嚕􅁥莎嚩􄚩訶」金剛部飲水灑淨真言曰：",
        "from": "T18n0894b_001:0709a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􈁊入嚩􄙌哩􄕗多􄙖嚩􄦿日哩􄕍尼􆿁𤙖」說佛部飲水灑淨手印，仰舒右手，屈無名指中節向內，勿著掌。",
        "from": "T18n0894b_001:0709a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說蓮華部飲水灑淨手印，仰舒右手，屈無名指中節及小指向內，勿令著掌。",
        "from": "T18n0894b_001:0709a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說金剛部飲水灑淨手印，仰舒右手，屈無名指向內，勿令著掌，散開頭指、小指。",
        "from": "T18n0894b_001:0709a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言、手印灑淨門外所換之衣。",
        "from": "T18n0894b_001:0709a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709a26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙘微􄗥莽􄙌囉􅁥莎嚩􄚩訶是灑衣真言」其手印相，以右手作拳，取水持誦，用灑淨衣。",
        "from": "T18n0894b_001:0709a29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言持誦其衣而著。",
        "from": "T18n0894b_001:0709b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄖵鉢􄙀哩􄙖嚩􅚰囉多􄙖嚩􄦿日哩􄕍尼􆿁𤙖著衣真言」入室便禮者，如教所說，行者一心當入道場。",
        "from": "T18n0894b_001:0709b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既入室已，面向於尊合掌作禮，先於室內當置尊容幀、或制底、或但置座，入便禮已而供養之。",
        "from": "T18n0894b_001:0709b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次辦供養具者——謂塗香等五種、牛淨、神線、茅環、己身之座、及閼伽器、金剛數珠、白芥子、繫腰線等，是名供具——先當辦之。",
        "from": "T18n0894b_001:0709b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入室之時，口誦真言而入足。",
        "from": "T18n0894b_001:0709b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􈁊入嚩二合􄙊哩􄕗多二合􄙒路􄑼者􄖩囊􆿁𤙖􄗁泮􄓚吒誦七遍，是入室真言，通三部用」次即應作三摩耶真言及印。",
        "from": "T18n0894b_001:0709b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「初佛部真言曰：",
        "from": "T18n0894b_001:0709b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄕗怛􄕣他􄑘蘖􄕟妬􆹊挪婆二合􄙖嚩􄗱也􇩉莎􄚩訶誦五遍」其手印相，仰兩手，十指直向前舒並側相著，微屈二頭指上節，是佛部三麼耶手印。",
        "from": "T18n0894b_001:0709b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說蓮華部三摩耶真言及手印。",
        "from": "T18n0894b_001:0709b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄖵鉢􇪯那謨􆹊挪婆􄙖嚩􄗱也􅁥莎嚩􄚩訶誦五遍」其手印相，先當合掌，中間兩手六指向外舒散，勿令相著，其二大指及二小指依舊相著，令掌中虛如開蓮華，微屈中間六指，是蓮華部三摩耶印。",
        "from": "T18n0894b_001:0709b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說金剛部三麼耶真言及手印。",
        "from": "T18n0894b_001:0709c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日𡀔􆹊挪婆􄙖嚩􄗱也􅁥莎嚩􄚩訶五遍」其手印相，右押左，兩手背逆相著，以右手大指叉其左手小指，左手大指叉其右手小指中間，兩手六指微開，如三股杵，是金剛部三麼耶手印。",
        "from": "T18n0894b_001:0709c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應以真言及手印遣除身中毘那夜迦難。",
        "from": "T18n0894b_001:0709c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿓闇􇩸沒㗚二合􄕝帝􄚨賀􄖩囊􄚨賀􄖩囊􇩴𤙖􄗁泮􈁆吒」其手印相，以兩手大指屈入掌中，以中指已下押作拳，舒二頭指，左右相叉入虎口中，以印從頂向下至足而略去之，是遣除身中毘那夜迦等難印。",
        "from": "T18n0894b_001:0709c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應以真言及手印辟除。",
        "from": "T18n0894b_001:0709c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩那􄗭謨􄙖嚩􄦽日囉􄗱也􆿁𤙖􄚨賀􄖩囊􆯯度􄖩囊􄗥莽􄕤他􄙘尾􈅣特夢􄙺娑􄗲瑜􄙺瑳􄗽囉􄗱也􄗁泮􈁆吒誦七遍」其手印相，以左手大指屈入掌中，以中指、無名指而押大指，屈其頭指著中指中節側，亦屈小指著無名指中節側，即舒怒臂，頭上右轉三遍及印觸身五處，右手大指甲，餘三指直竪，作拔折囉形，叉其腰側，立法如前，是辟除印。",
        "from": "T18n0894b_001:0709c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又，辟除真言及手印。",
        "from": "T18n0894b_001:0709c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0709c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日囉􄕗多􄙊囉􆿁𤙖􄗁泮􈁆吒誦三遍」其手印相，以右手拍左手掌，如是三遍，是辟除印。",
        "from": "T18n0894b_001:0710a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又，辟除真言及手印。",
        "from": "T18n0894b_001:0710a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0710a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄑂枳􄙌哩􄑂枳􄙌哩􄗽囉􄙖嚩􄙇咾􄩶捺囉二合􆿁𤙖􄗁泮􈁆吒」其手印相，以右手彈指三遍，是辟除印。",
        "from": "T18n0894b_001:0710a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名為辟除？",
        "from": "T18n0894b_001:0710a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於道場華香等、衣裳、及座等諸物，所有諸難擯逐令去，名辟除也，即得清淨。",
        "from": "T18n0894b_001:0710a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印而作去垢。",
        "from": "T18n0894b_001:0710a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0710a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄑂枳􄙌哩􄑂枳􄙌哩􄙖嚩􄦽日囉􆿁𤙖􄗁泮􈁆吒誦七遍」其手印相，以右手大指捻小指甲上，餘三指微開直竪，叉腰，三指向前，左手亦作用此印。",
        "from": "T18n0894b_001:0710a16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用印諸物令除穢惡，名曰去垢印。",
        "from": "T18n0894b_001:0710a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "枳里枳里，此忿怒聲。",
        "from": "T18n0894b_001:0710a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次作清淨，以部心真言作拳取水，持誦七遍，用灑諸物，便成清淨。",
        "from": "T18n0894b_001:0710a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初佛部心真言曰：",
        "from": "T18n0894b_001:0710a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄒸爾􄖩囊上􄒸爾􈅝迦輕呼」次蓮華部心真言曰：",
        "from": "T18n0894b_001:0710a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􄙒𡀔􄙌力􈅝迦輕呼」次金剛部心真言曰：",
        "from": "T18n0894b_001:0710a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日囉二合􆯯特勒􈅝迦」次作光澤，持誦真言及作手印，以印諸物便成光澤。",
        "from": "T18n0894b_001:0710b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初佛部光澤真言曰：",
        "from": "T18n0894b_001:0710b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄕝帝􄒼誓􄕝帝􄒼若􄙼徙􄙘尾􄖫寧􄙼徙􇧼提􄙺娑􄕻馱􄗱也􆿁𤙖􄗁泮􈁆吒誦三遍」蓮華部光澤真言曰：",
        "from": "T18n0894b_001:0710b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄕲儞􄡔比也􄕲儞􄡔卑也二合􄕱儞􄖵跛􄗱也􄗥摩􄚩訶􆱜室哩􄗷曳􅁥莎􄚩訶誦三遍」金剛部光澤真言曰：",
        "from": "T18n0894b_001:0710b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􈁊入嚩􄙊羅􈁊入嚩􄙊羅􄗱也􄙖滿􄓲度􄙀哩􇩉莎􄚩訶誦三遍」其手印相，以左手大指捻小指甲上，餘三指微開直竪，舒其肘，還以右手亦作此印，承左手肘下，以左手印印觸諸物即成光澤，此通三部用。",
        "from": "T18n0894b_001:0710b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次作護身，結明王手印，誦此真言，印頂……等五處，便成堅固護身。",
        "from": "T18n0894b_001:0710b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0710b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日囉􅍋祇寧􄪼鉢囉􄕱儞去􆻤鉢多􄗱也􅁥莎􄚩訶誦三遍」其手印相，二小指叉入掌，二無名指雙押二小指叉上，竪二中指側令相跓，二頭指微屈在中指上節側，相去一大麥許，直竪二大指在中指側，印觸五處即成護身，是護身印。",
        "from": "T18n0894b_001:0710b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次作大護身，誦此真言及作手印，亦印五處成大護身。",
        "from": "T18n0894b_001:0710c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0710c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􈁊入嚩􄗽囉􄖩囊􄗱也􆿁𤙖􄗁泮􈁆吒誦五遍」其手印相即前護身印同。",
        "from": "T18n0894b_001:0710c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應被甲誦真言及作手印，從頂摩觸下至於足，即成被甲。",
        "from": "T18n0894b_001:0710c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0710c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆯯度􄖷比􆯯度􄖷比􄑀迦􄗱也􆯯度􄖷比􄪼鉢囉􈁊入嚩􄙀里寧􅁥莎􄚩訶誦七遍」其手印相，散舒內手十指，此是被甲印。",
        "from": "T18n0894b_001:0710c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言及手印而用結髮。",
        "from": "T18n0894b_001:0710c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰：",
        "from": "T18n0894b_001:0710c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􈂼蘇􄙼悉􇧻地􄑀羯􄙀里􅁥莎嚩􄚩訶通三部用之」其手印相，右手作拳，直舒大指，印於頂上，此是結髮印，通三部用。",
        "from": "T18n0894b_001:0710c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又，佛部結髮真言曰：",
        "from": "T18n0894b_001:0710c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩那􄗰莽􈊭娑怛𭋺也􈉀地尾􄑀迦􈁀難􄙺薩囉􅞣嚩􄕗怛􄕤他􄑘蘖􄕗多􈁀難􇩂唵􄙼悉􇧹馱􄙒蓮華部結髮真言曰：",
        "from": "T18n0894b_001:0710c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩那􄗭謨􄗽囉􅑈怛囊􄩞怛囉􄗲夜􄗱也􄖩那􄗰莽􄖵鉢􇪯那莽􄖵簸􄕋儜􄗷曳􇩂唵􄑀迦􄓚𪘨􅁥莎􄚩訶七遍」金剛部結髮真言曰：",
        "from": "T18n0894b_001:0711a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩囊􄗭謨􄗽囉􅑈怛囊􄩞怛囉􄗲夜􄗱也􄖩囊􄗰莾􈂽室戰􆧽拏􄙖嚩􄦽日囉􄖵簸􄕋儜􄗷曳􄗥摩􄚩訶􄗱藥􄚴乞沙􄚢細􄖩囊􄖵鉢􄕗多􄗷曳􄖩囊􄗰莽􄑀迦􄙊羅􄥇訖㗚􈁀難􄕗多􄙃𡀔􄖷比􄕍尼􄙬商􄑀迦􄙐㘑􄙬扇􄕙底􄑀迦􄙀哩􄑤伽􄓚吒􄖫儞􄑤加􄓚吒􄖵儜􄓚簸􄖫多􄗱也􅁥沙􄚩訶誦七遍」其手印相與前結髮印同。",
        "from": "T18n0894b_001:0711a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次置其寶座者，本尊隨在方所先顧彼方，次應心想大海中寶山，其山頂上想寶師子座，於其上復觀諸寶樓閣，懸以繒幡，上有寶繖覆矜羯尼網而以莊嚴。",
        "from": "T18n0894b_001:0711a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心想已，後誦真言，能令加被前所想者一一成就。",
        "from": "T18n0894b_001:0711a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即次成就大海真言曰四玄當知：",
        "from": "T18n0894b_001:0711a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙘毘􄗦莽􄙒嚕􄕯娜􄕙地􆿁𤙖誦三遍」次說成就寶山真言曰：",
        "from": "T18n0894b_001:0711a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􄑼者􄙊羅􆿁𤙖誦三遍」次說成就寶師子座真言曰：",
        "from": "T18n0894b_001:0711a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􄑼者􄙊羅􄙘微􄙄𭋺􅁥莎􄚩訶誦三遍」次說成就寶蓮華真言曰：",
        "from": "T18n0894b_001:0711a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄑀迦􄗥莽􄙊羅􅁥莎􄚩訶誦三遍」其手印相，合掌兩手，叉其十指，以右押左，是辨諸莊嚴等印。",
        "from": "T18n0894b_001:0711b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說成就寶樓閣等種種莊嚴真言曰：",
        "from": "T18n0894b_001:0711b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄖩囊􄗰莽􄙺薩􅞣囉嚩􄕗怛􄕤他􄑘蘖􄕘多􈁀南􇩂唵􄙺薩􅞣羅嚩􄕤他􄑖欠􆿉嗚􄕗跢􄑀蘖􄕝帝􆷱娑􄗽破囉􄚪呬􄗯莽闇􄑘伽􄑘伽􄖩囊􈂾劍􅁥莎􄚩訶誦七遍」印同如前辨諸事印。",
        "from": "T18n0894b_001:0711b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次奉獻閼伽水者，隨部差別及事成就相應而作其器——所謂金、銀、熟銅、石、木、及瓦、商佉、與螺、樹葉……等作——勿令破缺、麁澁孔穴，盛滿香水，隨其部類而置諸華，以辦事真言持誦。",
        "from": "T18n0894b_001:0711b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以部母真言持誦，即以閼伽器持誦，置於左邊。",
        "from": "T18n0894b_001:0711b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辦事真言及手印，前所說辟除等真言、手印是也。",
        "from": "T18n0894b_001:0711b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說三部母等真言及手印者。",
        "from": "T18n0894b_001:0711b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初說佛部母真言曰：",
        "from": "T18n0894b_001:0711b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩囊􄗭謨􄗙婆􄑘伽􄙖嚩􄕟妬塢􈃇瑟膩􄙮沙􄗱也􇩂唵􄙃嚕􄙃嚕􆷱娑普􄙂嚕􈁊若嚩􄙊羅􄕙底􆵋瑟咤􄙼悉􇧹馱􄙒路􄑼者􄖯寧􄙺薩􅞣囉嚩􅚼剌他􄙺娑􄕻馱􄖫寧􅁥莎嚩􄚩訶是佛部母真言，佛眼是」蓮華部母真言曰：",
        "from": "T18n0894b_001:0711b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄕯那􈋧囉舍二合􄖩囊􈊮裟鉢㗚三合􅖱囉舍二合􄖩囊􄡸便演二合􄙖嚩􈃡室囉二合􄙖嚩􅋌娑莽二合􄗽囉􄕍嬭􄖩囊􄑼者􄣢瀉􄗥莽􈁅含􄙺薩􅞣囉嚩二合􄙺薩􄽚怛嚩二合􈁀難􄙺薩􅞣囉嚩二合􄢾微也二合􄕽地􄑼指􄚪枳􄙺瑳􄑀迦􇩂唵􄑀迦􄓠𪘨􄙘微􄑀迦􄓠𪘨􄑀迦􄓚吒􄙘微􄑀迦􄓚吒􄑀迦􄓤楨􄑀迦􄓠𪘨􄗙婆􄑘伽􄙖嚩􄕙底􄙘微􄒶若而也反􄗷曳􅁥莎􄚩訶誦三遍，半拏囉嚩私寧是也」金剛部母真言曰：",
        "from": "T18n0894b_001:0711c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􈂽室􆧽戰拏􄙖嚩􄦽日囉􄖵簸􄕍儜􄗷曳􄗥莽􄚩訶去􄗱藥􄚴乞沙二合􄚢細􄖩囊􄖵鉢􄕗多􄗷曳􇩂唵􄑄俱􈂿蘭􄕻達􄙀哩􄙖滿􄾫馱􄙖滿􄾫馱􆿁吽􄗁泮􈁆吒誦三遍，忙莽雞是」次說部心真言。",
        "from": "T18n0894b_001:0711c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初佛部心真言曰：",
        "from": "T18n0894b_001:0711c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄒸爾􄖩囊􄒸爾􈅝迦誦七遍」蓮華部心真言曰：",
        "from": "T18n0894b_001:0711c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿去􄙒𡀔􄙀力􈅝迦誦七遍」金剛部心真言曰：",
        "from": "T18n0894b_001:0711c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日囉二合􆯯特嘞二合􈅝迦誦七遍之」次說佛部母佛眼手印，相合兩手，屈二大指入掌中，微屈頭指，押中指上節背，是佛根手印。",
        "from": "T18n0894b_001:0712a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說蓮華部母半拏羅嚩私寧手印相，合掌，十指並屈，頭相著，令掌中虛，如未開蓮華，仍腕相著。",
        "from": "T18n0894b_001:0712a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說金剛部母忙莽計手印相，合掌屈二頭指及二無名指入掌中，背各相著，餘六指並直竪相著。",
        "from": "T18n0894b_001:0712a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說佛部心手印相。",
        "from": "T18n0894b_001:0712a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初佛部心手印相，八指相叉入掌中，令八指中節露出，其二大指並直竪，勿著頭指。",
        "from": "T18n0894b_001:0712a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說蓮華部心印相，依佛部心印，唯改左大指屈入掌中，獨竪右大指。",
        "from": "T18n0894b_001:0712a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說金剛部心印相，依佛部心印，唯改右大指屈入掌中，獨竪左大指。",
        "from": "T18n0894b_001:0712a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次，其閼伽法，隨部相應及事成就如教廣說，奉獻之時以本真言持誦而獻。",
        "from": "T18n0894b_001:0712a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次，奉請本尊者，持誦行者隨作法處先想座已。",
        "from": "T18n0894b_001:0712a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以真言、手印成就車輅，送本尊所。",
        "from": "T18n0894b_001:0712a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "車輅真言曰：",
        "from": "T18n0894b_001:0712a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄕛覩􄙂嚕􄕛覩􄙂嚕􆿁𤙖此真言通三部送」其手印相，二手中指以下六指相叉入掌，竪二頭指令頭相跓，二大指輔頭指側，開兩掌，不令腕相著，六指互相著掌，此手印通三部奉送車輅。",
        "from": "T18n0894b_001:0712a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉送車輅已，即應誦以此明，中安來句及作手印，或但獨請本尊、或并眷屬召請。",
        "from": "T18n0894b_001:0712b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰：",
        "from": "T18n0894b_001:0712b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􄖩那􄗰莽􈊭娑怛𭋺􄗱也􄕽地􄙘尾􄑁迦􈁀難􄙺薩􅞣囉嚩􄕗怛􄕤他􄑘蘖􄕘多􈁀難􇩂唵􄙖嚩􄧇日㘕􄑚祇􄟗儞也􄑀羯􅞻囉灑此中安來句􄗱也􅁥莎􄚩訶」其手印，依前車輅印，唯改右大指與左手中指頭相著，此手印通三部奉請印。",
        "from": "T18n0894b_001:0712b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以部心真言，中置來句及作手印而請。",
        "from": "T18n0894b_001:0712b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以部心真言奉請本尊，歎喜速來。",
        "from": "T18n0894b_001:0712b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初佛部心真言曰：",
        "from": "T18n0894b_001:0712b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄒸爾􄖩囊􄒸邇􈅝迦誦二十五遍」其手印相，依前部心印，唯以二大指向前，招三遍即成請印，佛部請印。",
        "from": "T18n0894b_001:0712b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華部心真言曰：",
        "from": "T18n0894b_001:0712b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􆿅阿􄙒路􄙀力􈅝迦誦二十五遍」其手印相，依前部心印，唯以右大指向前招三遍，即成請印，是蓮華部請印。",
        "from": "T18n0894b_001:0712b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛部心真言曰：",
        "from": "T18n0894b_001:0712b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄙖嚩􄦽日囉二合􆯯特嘞二合􈅝迦誦二十五遍」其手印相，依前部心印，改左大指，向前招三遍即成請印，金剛部請印。",
        "from": "T18n0894b_001:0712b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲奉請時，先執香爐，誦真言淨治空中道路，然後奉請。",
        "from": "T18n0894b_001:0712b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨治真言曰：",
        "from": "T18n0894b_001:0712b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􈂼蘇􄙼悉􇧻地􄑀迦􄙀哩􈁊入嚩二合􄙊里􄕗多􈁀喃􄕗多􇩸慕􇪱囉多二合􄗷曳􈁊入嚩二合􄙊囉􈁊入嚩二合􄙊囉􄙖滿􄾫馱􄙖滿􄾫馱􄚨賀􄖩囊􄚨賀􄖩囊􆿁𤙖􄗁泮􈁆吒」金剛部淨治路真言通三部用。",
        "from": "T18n0894b_001:0712c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部淨治路真言曰：",
        "from": "T18n0894b_001:0712c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄺸入嚩二合􄙊囉虎𤙖」蓮華部淨治路真言曰：",
        "from": "T18n0894b_001:0712c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􇩂唵􄖵鉢􇪯那咩二合􄖯寧上􄗙婆上􄑘伽輕􄙖嚩􄕙底􄗭慕􄚨賀􄗱也􄗭慕輕去􄚨賀􄗱也􄒶若􄑘蘖二合􅝥慕􄚨賀􄖫寧上􅁥莎􄚩訶」作此法已，空中關鑰悉皆開解，亦成辟除乃至清淨，及成警覺本尊。",
        "from": "T18n0894b_001:0712c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作奉請手印，即誦此句一遍，次即應誦奉請真言。",
        "from": "T18n0894b_001:0712c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其句曰：",
        "from": "T18n0894b_001:0712c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「􆿏曀􄡾醯曳􄚪呬􄗙婆􄑘伽􄙠梵􄖫寧􄚨賀􄗙薄􈊯底夜二合􄖩囊􄙺三􄗥莽􄗷曳􄖩囊􄑼者􆿓閼􈋩囉健􄑼者􄚦三􄪼鉢羅􄕙底􄚢誓􄕹南􈁂布􄒶若二合􄑼遮􄕯捺􇩊儞也􄪼鉢囉二合􄚫四去􄕯娜􄗫咩通三部，奉請句真言前已說訖」隨其本尊坐立、忿怒及其歡喜等相、乃至顧視行者，作彼形狀相貌相應而奉請尊。",
        "from": "T18n0894b_001:0712c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　　　　　　　　　　僧平源之本",
        "from": "T18n0894b_001:0713a03_0",
        "context_with_next_sentence": true
    }
]