[
    {
        "source_sentence": "摩利支菩薩略念誦法",
        "from": "T21n1258_001:0285a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺三藏沙門大廣智",
        "from": "T21n1258_001:0285a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空奉　詔譯",
        "from": "T21n1258_001:0285a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應結毘盧遮那佛印。",
        "from": "T21n1258_001:0285a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次印相者。",
        "from": "T21n1258_001:0285a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手內相叉。",
        "from": "T21n1258_001:0285a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並竪二大指即成。",
        "from": "T21n1258_001:0285a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言七遍頂上散。",
        "from": "T21n1258_001:0285a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1258_001:0285a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱南阿尾羅吽欠次結摩利支菩薩根本真言印。",
        "from": "T21n1258_001:0285a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次印相者。",
        "from": "T21n1258_001:0285a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手內相叉。",
        "from": "T21n1258_001:0285a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪合二頭指。",
        "from": "T21n1258_001:0285a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指各糺持二頭指令相捻。",
        "from": "T21n1258_001:0285a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指並竪合即成。",
        "from": "T21n1258_001:0285a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言加持身五處。",
        "from": "T21n1258_001:0285a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印額次右肩次左肩。",
        "from": "T21n1258_001:0285a29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次心次喉上。",
        "from": "T21n1258_001:0285b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以各誦一遍。",
        "from": "T21n1258_001:0285b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1258_001:0285b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩謨引囉怛曩二合怛囉二合夜耶一怛儞也二合他引二遏迦沫思三沫迦沫思遏度引沫思四旨跛囉沫思五摩賀引旨跛囉沫思六按怛馱娜沫思七摩哩制野沫思八曩謨薩都二合帝九𡀩乞叉二合𡀩乞叉二合𤚥引十薩嚩薩怛嚩二合難引者十一薩嚩怛囉二合薩嚩波庾引十二跛捺囉二合吠毘藥二合娑嚩二合訶引十三次結摩利支菩薩心印。",
        "from": "T21n1258_001:0285b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1258_001:0285b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩莫三滿多沒馱引南引唵摩引利哩制曳沙嚩二合訶次結心真言印相者。",
        "from": "T21n1258_001:0285b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以左手虛作拳。",
        "from": "T21n1258_001:0285b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指大母指相捻如環。",
        "from": "T21n1258_001:0285b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自身入左手拳中。",
        "from": "T21n1258_001:0285b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手覆左拳上。",
        "from": "T21n1258_001:0285b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想此印為摩利支菩薩形。",
        "from": "T21n1258_001:0285b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想自身在摩利支菩薩心中不斷絕。",
        "from": "T21n1258_001:0285b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身真言應時獲得殊勝加持。",
        "from": "T21n1258_001:0285b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不被一切惡人為障礙者所見。",
        "from": "T21n1258_001:0285b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切災禍皆不著身。",
        "from": "T21n1258_001:0285b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切口舌皆得除滅。",
        "from": "T21n1258_001:0285b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蟲狼虎豹水火盜則賊皆不能侵害。",
        "from": "T21n1258_001:0285b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求世間果報皆得諧偶。",
        "from": "T21n1258_001:0285b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修出世間法。",
        "from": "T21n1258_001:0285b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得禪定現前。",
        "from": "T21n1258_001:0285b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧增盛獲得聞持。",
        "from": "T21n1258_001:0285b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不忘失菩提心法。",
        "from": "T21n1258_001:0285b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言時深起悲愍。",
        "from": "T21n1258_001:0285b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為一切有情拔除苦惱。",
        "from": "T21n1258_001:0285b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆獲無障解脫速證無上菩提道。",
        "from": "T21n1258_001:0285b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須祕密勿妄傳授。",
        "from": "T21n1258_001:0285b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩利支菩薩略念誦法",
        "from": "T21n1258_001:0285b24_100",
        "context_with_next_sentence": false
    }
]