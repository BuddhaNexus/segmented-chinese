[
    {
        "source_sentence": "大毘盧遮那成佛神變加持經略",
        "from": "T18n0856_001:0174c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示七支念誦隨行法",
        "from": "T18n0856_001:0174c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T18n0856_001:0174c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首無礙智，　　密教意生子，",
        "from": "T18n0856_001:0174c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依彼蘇多羅，　　攝此隨行法。",
        "from": "T18n0856_001:0174c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言行菩薩，　　無住無等誓，",
        "from": "T18n0856_001:0174c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語密身俱密，　　後作相應行。",
        "from": "T18n0856_001:0174c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三昧耶真言曰：",
        "from": "T18n0856_001:0174c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契謂齊諸輪，　　密合建二空，",
        "from": "T18n0856_001:0174c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五處頂肩心，　　最後加咽位。",
        "from": "T18n0856_001:0174c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結法界生，　　密慧之幖幟，",
        "from": "T18n0856_001:0174c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨身口意業，　　遍轉於其身。",
        "from": "T18n0856_001:0174c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界生真言曰：",
        "from": "T18n0856_001:0174c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若三昧手，　　俱作金剛拳，",
        "from": "T18n0856_001:0175a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相逼建風幢，　　端直令相合，",
        "from": "T18n0856_001:0175a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名為法界，　　清淨之密印。",
        "from": "T18n0856_001:0175a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法界自性，　　而觀於己身，",
        "from": "T18n0856_001:0175a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無垢同虛空，　　真言印威力。",
        "from": "T18n0856_001:0175a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結轉法輪，　　金剛薩埵印，",
        "from": "T18n0856_001:0175a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此殊勝加持，　　令彼獲堅固。",
        "from": "T18n0856_001:0175a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀手相背，　　地水火風輪，",
        "from": "T18n0856_001:0175a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右互相持，　　二空各旋轉，",
        "from": "T18n0856_001:0175a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合於慧掌內，　　名最勝法輪。",
        "from": "T18n0856_001:0175a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵真言曰：",
        "from": "T18n0856_001:0175a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正誦此密言，　　當住於等引，",
        "from": "T18n0856_001:0175a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀自身像，　　即是執金剛。",
        "from": "T18n0856_001:0175a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量眾大魔，　　諸有親見者，",
        "from": "T18n0856_001:0175a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金剛薩埵，　　勿生疑惑心。",
        "from": "T18n0856_001:0175a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以無動聖，　　辟障及除垢，",
        "from": "T18n0856_001:0175a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而能淨眾事，　　結護隨相應。",
        "from": "T18n0856_001:0175a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動尊真言曰：",
        "from": "T18n0856_001:0175a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定空加地水，　　風火竪於心，",
        "from": "T18n0856_001:0175a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧劍亦如是，　　出鞘能成辦。",
        "from": "T18n0856_001:0175a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以如來鉤，　　請尊及聖眾，",
        "from": "T18n0856_001:0175a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密方便相應，　　依本誓而降。",
        "from": "T18n0856_001:0175a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來鉤真言曰：",
        "from": "T18n0856_001:0175a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀內相叉，　　竪合智風竪，",
        "from": "T18n0856_001:0175b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔屈於初分，　　餘輪狀若環，",
        "from": "T18n0856_001:0175b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者悲願力，　　隨請咸來降。",
        "from": "T18n0856_001:0175b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉現三昧耶，　　明契如前說。",
        "from": "T18n0856_001:0175b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既呈本誓日，　　決定相應故。",
        "from": "T18n0856_001:0175b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當隨力分，　　供養表誠心，",
        "from": "T18n0856_001:0175b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閼伽香食燈，　　下至一花水，",
        "from": "T18n0856_001:0175b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或但運心想，　　殊勝最難量。",
        "from": "T18n0856_001:0175b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以普通印，　　觀行及真言，",
        "from": "T18n0856_001:0175b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有表無表俱，　　一切皆成就。",
        "from": "T18n0856_001:0175b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普通真言曰：",
        "from": "T18n0856_001:0175b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧手齊合，　　右交於上節，",
        "from": "T18n0856_001:0175b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心普周遍，　　所念皆現前。",
        "from": "T18n0856_001:0175b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即施供養已，　　修常作持誦，",
        "from": "T18n0856_001:0175b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先擐金剛鎧，　　結護事相應。",
        "from": "T18n0856_001:0175b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛甲冑真言曰：",
        "from": "T18n0856_001:0175b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先作虛心合，　　風輪糺持火，",
        "from": "T18n0856_001:0175b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大空依火本，　　遍觸後居心。",
        "from": "T18n0856_001:0175b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結方隅界，　　用前不動尊，",
        "from": "T18n0856_001:0175b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左轉成辟除，　　右旋及上下，",
        "from": "T18n0856_001:0175b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "備觸身支分，　　結護悉堅牢，",
        "from": "T18n0856_001:0175b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真語母陀羅，　　如前已分別。",
        "from": "T18n0856_001:0175c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既為嚴備訖，　　當示根本契，",
        "from": "T18n0856_001:0175c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還加於五處，　　七轉或再三，",
        "from": "T18n0856_001:0175c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散印頂上開。",
        "from": "T18n0856_001:0175c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　半跏正身意，或作相應坐，　　隨方如教說。",
        "from": "T18n0856_001:0175c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正面住身前，　　覩一圓明像，",
        "from": "T18n0856_001:0175c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨無瑕玷，　　猶如滿月輪，",
        "from": "T18n0856_001:0175c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中有本尊形，　　妙色超三界，",
        "from": "T18n0856_001:0175c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紗縠嚴身服，　　寶冠紺髮垂，",
        "from": "T18n0856_001:0175c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂然三摩地，　　輝焰過眾電，",
        "from": "T18n0856_001:0175c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如淨鏡內，　　幽邃現真容，",
        "from": "T18n0856_001:0175c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜怒顯形色，　　操持與願等，",
        "from": "T18n0856_001:0175c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正受相應身，　　明了心無亂，",
        "from": "T18n0856_001:0175c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無相淨法體，　　應願濟群生。",
        "from": "T18n0856_001:0175c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專注而念持，　　限數既終畢，",
        "from": "T18n0856_001:0175c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懈極後方息。",
        "from": "T18n0856_001:0175c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠啟願等，　　殷重禮聖尊，",
        "from": "T18n0856_001:0175c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左轉無動力，　　解前所結護，",
        "from": "T18n0856_001:0175c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還呈本尊契，　　頂上散開之。",
        "from": "T18n0856_001:0175c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心送於聖天，　　五輪投地禮，",
        "from": "T18n0856_001:0175c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然起隨眾善，　　後會復如初。",
        "from": "T18n0856_001:0175c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時與二三，　　或四皆如此，",
        "from": "T18n0856_001:0175c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘分旋遶塔，　　浴像轉大乘。",
        "from": "T18n0856_001:0175c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗飾曼荼羅，　　布花讚佛德，",
        "from": "T18n0856_001:0175c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或復無雜念，　　專注於等引。",
        "from": "T18n0856_001:0175c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此淨三業，　　悉地速現前，",
        "from": "T18n0856_001:0175c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖力所加持，　　行願相應故。",
        "from": "T18n0856_001:0175c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有樂修習，　　隨師而受學，",
        "from": "T18n0856_001:0175c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持明傳本教，　　無越三昧耶。",
        "from": "T18n0856_001:0175c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤策無間修，　　離蓋及熏醉，",
        "from": "T18n0856_001:0176a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順行諸學處，　　悉地隨力成。",
        "from": "T18n0856_001:0176a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我依大日經，　　略示瑜伽行，",
        "from": "T18n0856_001:0176a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修證殊勝福，　　普潤諸有情。",
        "from": "T18n0856_001:0176a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大毘盧遮那經略示七支念誦儀軌法一卷",
        "from": "T18n0856_001:0176a06_100",
        "context_with_next_sentence": false
    }
]