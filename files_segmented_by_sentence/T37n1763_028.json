[
    {
        "source_sentence": "2大般涅槃經集解卷第二十八",
        "from": "T37n1763_028:0479a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　釋觀三十六物　釋四意止觀",
        "from": "T37n1763_028:0479a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　結定果　出仙豫王殺",
        "from": "T37n1763_028:0479a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　婆羅門事　釋四諦義　釋三苦義　釋四諦有漏無漏義　釋八苦義聖行品之第二復次善男子！",
        "from": "T37n1763_028:0479a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩至除去皮肉唯觀白骨。",
        "from": "T37n1763_028:0479a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明定門也。",
        "from": "T37n1763_028:0479a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有八段：",
        "from": "T37n1763_028:0479a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一總觀，身有三十六佛。",
        "from": "T37n1763_028:0479a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二移觀，觀四色覓我不得。",
        "from": "T37n1763_028:0479a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三觀手足支節相柱，為觀轉明。",
        "from": "T37n1763_028:0479a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四見一切皆青也。",
        "from": "T37n1763_028:0479a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此觀始成故，第五諸佛現而復隱，令其思而易觀。",
        "from": "T37n1763_028:0479a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六觀心，是則前觀身、後觀心具三意止。",
        "from": "T37n1763_028:0479a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二既已具則四亦具也，故第七結堪忍地。",
        "from": "T37n1763_028:0479a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八明既得勝定，必能為物破戒也。",
        "from": "T37n1763_028:0479a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此先明身意止也，以人人多於身中計有淨也，此即第一觀也。",
        "from": "T37n1763_028:0479a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0479a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二門有五段，四念觀即四也，第五結果。",
        "from": "T37n1763_028:0479a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下觀身無我。",
        "from": "T37n1763_028:0479a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念骨色相異至即得斷除一切色欲。",
        "from": "T37n1763_028:0479a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏斷鮮淨之欲也。",
        "from": "T37n1763_028:0479a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因色起欲未盡下形貌等三，皆因色起也。",
        "from": "T37n1763_028:0479b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0479b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二移觀四色，覓我不得也。",
        "from": "T37n1763_028:0479b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念如是骨者至二姿態欲三細觸欲。",
        "from": "T37n1763_028:0479b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_028:0479b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三觀也。",
        "from": "T37n1763_028:0479b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩觀青骨時至青黃赤白鴿等色光。",
        "from": "T37n1763_028:0479b05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_028:0479b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為觀轉明，是以第四觀青，則一切皆青也。",
        "from": "T37n1763_028:0479b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩於是一一諸光明中至光中諸佛忽然不現。",
        "from": "T37n1763_028:0479b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "抱疑來久，見像便問。",
        "from": "T37n1763_028:0479b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽然不見者，觀道未明，不答而滅也。",
        "from": "T37n1763_028:0479b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0479b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五諸佛現而復隱，令其思而易觀也。",
        "from": "T37n1763_028:0479b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0479b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一，身念處觀也。",
        "from": "T37n1763_028:0479b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念：",
        "from": "T37n1763_028:0479b13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或識是我至猶如流水亦復非我。",
        "from": "T37n1763_028:0479b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二，心念處觀。",
        "from": "T37n1763_028:0479b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念：",
        "from": "T37n1763_028:0479b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若識非我至當於何處而生貪欲。",
        "from": "T37n1763_028:0479b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_028:0479b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三，法念處觀。",
        "from": "T37n1763_028:0479b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若被罵辱復於何處至則墮地獄畜生餓鬼。",
        "from": "T37n1763_028:0479b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領佛不答之旨，乃觀識求我又不可得。",
        "from": "T37n1763_028:0479b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀出入息或是我者，有息則生，無息則死。",
        "from": "T37n1763_028:0479b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀之直是風性，亦復非我。",
        "from": "T37n1763_028:0479b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息以風多，風乃四大合成，而一性非我，和合亦無。",
        "from": "T37n1763_028:0479b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念悉無有我者，得無我空，見第一義，則見世諦也。",
        "from": "T37n1763_028:0479b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0479b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或息是我者，第六即是心意止觀也。",
        "from": "T37n1763_028:0479b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但見生滅念念流謝，豈有一神常而不滅耶？",
        "from": "T37n1763_028:0479b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何處當有受罵辱者，此明無我。",
        "from": "T37n1763_028:0479b25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但見眾法，我心自息也。",
        "from": "T37n1763_028:0479b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0479b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四，明受念處觀也。",
        "from": "T37n1763_028:0479b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩爾時作是觀已至是故名為住堪忍地。",
        "from": "T37n1763_028:0479b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結定果也。",
        "from": "T37n1763_028:0479b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0479b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪忍地者，第七結果，謂三地也。",
        "from": "T37n1763_028:0479b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三地菩薩脩十二門種，得忍度成就。",
        "from": "T37n1763_028:0479c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既能安心忍理，故能於事不起瞋也。",
        "from": "T37n1763_028:0479c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0479c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五，結果。",
        "from": "T37n1763_028:0479c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉菩薩摩訶薩白佛言至菩薩摩訶薩得毀淨戒。",
        "from": "T37n1763_028:0479c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上浮囊之譬輕重不犯，而菩薩護法應化隨緣。",
        "from": "T37n1763_028:0479c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二言相食，宜項會也。",
        "from": "T37n1763_028:0479c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未得不動地者，明未得猶尚不犯，何況已得。",
        "from": "T37n1763_028:0479c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為攝取眾生，得毀戒也。",
        "from": "T37n1763_028:0479c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0479c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八明得深定已，能隨緣益物，得破戒也。",
        "from": "T37n1763_028:0479c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0479c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問意定初依人位也。",
        "from": "T37n1763_028:0479c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以不待辨慧後而此中問者，以戒定之位本居五方便中無相行已上，是聖人位也。",
        "from": "T37n1763_028:0479c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初依人雖復信根永立，要未得真解。",
        "from": "T37n1763_028:0479c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲為利益之道得破戒，不解言菩薩寧當自墮地獄，不令眾生退菩提心。",
        "from": "T37n1763_028:0479c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此因緣，可得破戒而不名為犯也。",
        "from": "T37n1763_028:0479c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時文殊師利菩薩至若墮阿鼻地獄無有是處。",
        "from": "T37n1763_028:0479c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至言實須以事證也。",
        "from": "T37n1763_028:0479c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛讚文殊師利至乃有如是無量勢力。",
        "from": "T37n1763_028:0479c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為法斷命即是護法，況直爾出入無期、心同虛空者乎。",
        "from": "T37n1763_028:0479c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0479c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引本行為證也。",
        "from": "T37n1763_028:0479c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下梵行中明三無量，當復廣其事也。",
        "from": "T37n1763_028:0479c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次迦葉！",
        "from": "T37n1763_028:0479c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有聖行所謂四聖諦苦集滅道。",
        "from": "T37n1763_028:0479c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0479c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說慧也。",
        "from": "T37n1763_028:0479c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧緣真諦，辨真諦有三種，初明四諦、中辨二諦、後略明實諦也。",
        "from": "T37n1763_028:0479c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此下盡八字，五翻說四諦也。",
        "from": "T37n1763_028:0479c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0479c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧生由境，故寄境以明慧也。",
        "from": "T37n1763_028:0479c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有四科明義：",
        "from": "T37n1763_028:0479c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一明四諦、第二明二諦、第三明實諦、第四歎經也。",
        "from": "T37n1763_028:0479c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就四諦中有四翻：",
        "from": "T37n1763_028:0479c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一以五重略辨四諦；",
        "from": "T37n1763_028:0479c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二就八苦門廣明苦諦；",
        "from": "T37n1763_028:0479c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三寄菩薩觀行，驗其所以是可厭之法；",
        "from": "T37n1763_028:0479c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四略會通二教也。",
        "from": "T37n1763_028:0479c29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0479c29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三門明慧也。",
        "from": "T37n1763_028:0480a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有六段：",
        "from": "T37n1763_028:0480a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一就四諦辨慧、第二就真俗、第三就實諦、第四遣執、第五結慧果、第六明登初地。",
        "from": "T37n1763_028:0480a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後進脩二十五三昧，進得不動，自在地上至金剛心也。",
        "from": "T37n1763_028:0480a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就四諦門中分為三章：",
        "from": "T37n1763_028:0480a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一有五重。",
        "from": "T37n1763_028:0480a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第一重，略辨四諦也。",
        "from": "T37n1763_028:0480a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦來逼心，心則生惱，謂逼迮相也。",
        "from": "T37n1763_028:0480a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱結業，能生來苦，生長相也。",
        "from": "T37n1763_028:0480a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生死因盡，寂滅相也。",
        "from": "T37n1763_028:0480a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣中忘相之知，大乘道也。",
        "from": "T37n1763_028:0480a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦葉！",
        "from": "T37n1763_028:0480a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦者逼迮相至滅者寂滅相道者大乘相。",
        "from": "T37n1763_028:0480a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0480a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逼迫眾生也。",
        "from": "T37n1763_028:0480a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0480a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一重，以十四種色是苦具，心為苦體。",
        "from": "T37n1763_028:0480a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言不起則已，起則為緣所逼，故言逼迫相也。",
        "from": "T37n1763_028:0480a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十惡為因，無明為緣，以能生長未來故，故名集也。",
        "from": "T37n1763_028:0480a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏教以三心滅處為滅；",
        "from": "T37n1763_028:0480a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓教以常住之體絕眾相為滅也，破彼三因，以大乘常住之因為道。",
        "from": "T37n1763_028:0480a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_028:0480a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦者現相至滅者除相道者能除相。",
        "from": "T37n1763_028:0480a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0480a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現惱切故，言現相也。",
        "from": "T37n1763_028:0480a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0480a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二重，謂法顯現者也。",
        "from": "T37n1763_028:0480a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾之為力，能󱍧轉行人受六道苦果，轉相也。",
        "from": "T37n1763_028:0480a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓果之體除一切惡，謂之除也，無漏之體性能除。",
        "from": "T37n1763_028:0480a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒五方便雖是伏除，未是永斷，亦相從為道，取其感果之義，猶集諦攝也。",
        "from": "T37n1763_028:0480a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0480a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二重也。",
        "from": "T37n1763_028:0480a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麁著易知，為現相也。",
        "from": "T37n1763_028:0480a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因謝果起，轉因得果，轉相也。",
        "from": "T37n1763_028:0480a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅者，據所除為論也。",
        "from": "T37n1763_028:0480a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道者，據除為論也。",
        "from": "T37n1763_028:0480a24_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_028:0480a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦者有三相至道者脩戒定慧。",
        "from": "T37n1763_028:0480a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0480a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三相者，苦受性苦，能苦眾生，謂苦苦也。",
        "from": "T37n1763_028:0480a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不苦不樂以求須，為行苦也。",
        "from": "T37n1763_028:0480a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂受滅時生苦，為壞苦也。",
        "from": "T37n1763_028:0480a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0480a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三重，釋苦義，具在中也。",
        "from": "T37n1763_028:0480a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集謂二十五有者，此乃舉於所集以明能集也。",
        "from": "T37n1763_028:0480b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0480b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三重也。",
        "from": "T37n1763_028:0480b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔化下愚，開三受教門，次以三苦點壞三受也。",
        "from": "T37n1763_028:0480b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦之重者為苦苦。",
        "from": "T37n1763_028:0480b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以果來壞因，明樂受之體即是苦故，稱為壞苦也。",
        "from": "T37n1763_028:0480b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通前二心，行緣動求，名為行苦也。",
        "from": "T37n1763_028:0480b04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十五有因為集諦，果為滅諦，脩戒定慧為道諦。",
        "from": "T37n1763_028:0480b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_028:0480b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有漏法者至無漏因者則名為道。",
        "from": "T37n1763_028:0480b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0480b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有為是苦諦，無為是滅諦。",
        "from": "T37n1763_028:0480b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有漏業為苦因，天漏業為道因也。",
        "from": "T37n1763_028:0480b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0480b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四重明有漏因果者，義與毘曇相應也。",
        "from": "T37n1763_028:0480b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0480b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重也，指就雨廂易見也。",
        "from": "T37n1763_028:0480b11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_028:0480b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八相名苦至三念處大悲是名為道。",
        "from": "T37n1763_028:0480b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_028:0480b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五，重明四諦也。",
        "from": "T37n1763_028:0480b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十力乃至大悲為道者，金剛心為無礙，佛心為解脫，有雙道之義，故假稱道也。",
        "from": "T37n1763_028:0480b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_028:0480b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五重，廣三苦為八苦也。",
        "from": "T37n1763_028:0480b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生苦具二，謂苦苦及壞苦也。",
        "from": "T37n1763_028:0480b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以潤生之愛從樂受而來，因中說果，即壞苦也。",
        "from": "T37n1763_028:0480b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取出生之生，則有苦苦。",
        "from": "T37n1763_028:0480b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心即苦體，墮地獄，為苦苦也。",
        "from": "T37n1763_028:0480b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨憎、求不得，亦苦苦攝。",
        "from": "T37n1763_028:0480b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其餘五苦，悉應壞苦攝也。",
        "from": "T37n1763_028:0480b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_028:0480b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生者出相所謂五種至是故名為五盛陰苦。",
        "from": "T37n1763_028:0480b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_028:0480b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以總七苦更作一苦名者，人謂七苦異陰而有，今說即陰是也。",
        "from": "T37n1763_028:0480b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_028:0480b24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此第二，就八苦門廣明苦諦也。",
        "from": "T37n1763_028:0480b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第二十八",
        "from": "T37n1763_028:0480b25_100",
        "context_with_next_sentence": false
    }
]