[
    {
        "source_sentence": "一切如來心祕密全身舍利寶篋",
        "from": "T19n1022A_001:0710a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印陀羅尼經",
        "from": "T19n1022A_001:0710a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅",
        "from": "T19n1022A_001:0710a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國公食邑三千戶賜紫贈司空謚大鑒正號大廣智大興善寺三藏沙門不空奉　詔譯如是我聞。",
        "from": "T19n1022A_001:0710a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時薄伽梵在摩伽陀國無垢園寶光明池中。",
        "from": "T19n1022A_001:0710a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩眾。",
        "from": "T19n1022A_001:0710a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及大聲聞僧。",
        "from": "T19n1022A_001:0710a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍藥叉健闥婆阿蘇羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T19n1022A_001:0710a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量百千眾俱前後圍繞。",
        "from": "T19n1022A_001:0710a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時眾中有一大婆羅門。",
        "from": "T19n1022A_001:0710a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名無垢妙光。",
        "from": "T19n1022A_001:0710a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞聰慧人所樂見。",
        "from": "T19n1022A_001:0710a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常奉十善。",
        "from": "T19n1022A_001:0710a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三寶所決定信向。",
        "from": "T19n1022A_001:0710a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善心慇重智慧微細。",
        "from": "T19n1022A_001:0710a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常欲令一切眾生相應善利。",
        "from": "T19n1022A_001:0710a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大富豐饒資具圓滿。",
        "from": "T19n1022A_001:0710a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼婆羅門無垢妙光。",
        "from": "T19n1022A_001:0710a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起往詣佛所。",
        "from": "T19n1022A_001:0710a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶佛七匝。",
        "from": "T19n1022A_001:0710a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以眾香花奉獻世尊。",
        "from": "T19n1022A_001:0710a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無價妙衣瓔珞珠鬘持覆佛上。",
        "from": "T19n1022A_001:0710a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮雙足却住一面。",
        "from": "T19n1022A_001:0710a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是請言。",
        "from": "T19n1022A_001:0710a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊與諸大眾。",
        "from": "T19n1022A_001:0710a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明日晨朝至我宅中受我供養。",
        "from": "T19n1022A_001:0710a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊默然許之。",
        "from": "T19n1022A_001:0710b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門知佛受請。",
        "from": "T19n1022A_001:0710b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遽還所住。",
        "from": "T19n1022A_001:0710b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於是夜廣辦餚饍百味飲食。",
        "from": "T19n1022A_001:0710b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張施殿宇種種莊嚴。",
        "from": "T19n1022A_001:0710b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至明旦已與諸眷屬。",
        "from": "T19n1022A_001:0710b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持眾香花及諸伎樂。",
        "from": "T19n1022A_001:0710b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至如來所白言。",
        "from": "T19n1022A_001:0710b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時至願赴我請。",
        "from": "T19n1022A_001:0710b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今正是時。",
        "from": "T19n1022A_001:0710b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願垂聽許。",
        "from": "T19n1022A_001:0710b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊安慰彼婆羅門無垢妙光已顧視大眾告言。",
        "from": "T19n1022A_001:0710b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等皆應往彼婆羅門家。",
        "from": "T19n1022A_001:0710b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲令彼獲大利故。",
        "from": "T19n1022A_001:0710b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時世尊即從座起。",
        "from": "T19n1022A_001:0710b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔起座已。",
        "from": "T19n1022A_001:0710b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從佛身出種種光明。",
        "from": "T19n1022A_001:0710b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間錯妙色照觸十方。",
        "from": "T19n1022A_001:0710b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆警覺一切。",
        "from": "T19n1022A_001:0710b10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來既警覺已。",
        "from": "T19n1022A_001:0710b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後取道。",
        "from": "T19n1022A_001:0710b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時婆羅門以恭敬心。",
        "from": "T19n1022A_001:0710b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持妙香花與諸眷屬及天龍八部釋梵護世。",
        "from": "T19n1022A_001:0710b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先行治道奉引如來。",
        "from": "T19n1022A_001:0710b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊前路不遠。",
        "from": "T19n1022A_001:0710b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中止一園名曰豐財。",
        "from": "T19n1022A_001:0710b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼園中有古朽塔。",
        "from": "T19n1022A_001:0710b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧壞崩倒荊棘所沒。",
        "from": "T19n1022A_001:0710b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "榛草充遍覆諸礓礫。",
        "from": "T19n1022A_001:0710b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狀若土堆。",
        "from": "T19n1022A_001:0710b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊徑往塔所。",
        "from": "T19n1022A_001:0710b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時朽塔上放大光明赫然熾盛。",
        "from": "T19n1022A_001:0710b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於土聚中出善哉聲讚言善哉善哉釋迦牟尼如來今日所行極善境界。",
        "from": "T19n1022A_001:0710b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又言。",
        "from": "T19n1022A_001:0710b18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝婆羅門。",
        "from": "T19n1022A_001:0710b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於今日獲大善利。",
        "from": "T19n1022A_001:0710b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊禮彼朽塔右遶三匝。",
        "from": "T19n1022A_001:0710b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫身上衣用覆其上。",
        "from": "T19n1022A_001:0710b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泫然垂淚涕泗交流。",
        "from": "T19n1022A_001:0710b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泣已微笑。",
        "from": "T19n1022A_001:0710b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當爾之時。",
        "from": "T19n1022A_001:0710b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛皆同觀視亦皆泣淚。",
        "from": "T19n1022A_001:0710b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱放光明來照是塔。",
        "from": "T19n1022A_001:0710b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時大眾集會。",
        "from": "T19n1022A_001:0710b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆同怪異。",
        "from": "T19n1022A_001:0710b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "驚怖而住。",
        "from": "T19n1022A_001:0710b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩亦皆流淚。",
        "from": "T19n1022A_001:0710b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威焰熾盛執杵旋轉。",
        "from": "T19n1022A_001:0710b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往詣佛所白言。",
        "from": "T19n1022A_001:0710b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此何因緣現是光相。",
        "from": "T19n1022A_001:0710b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故於如來眼流淚如是。",
        "from": "T19n1022A_001:0710b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是佛之大瑞光相現前。",
        "from": "T19n1022A_001:0710b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來於此大眾。",
        "from": "T19n1022A_001:0710b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解釋我疑。",
        "from": "T19n1022A_001:0710b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時薄伽梵告金剛手。",
        "from": "T19n1022A_001:0710b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此大全身舍利聚如來塔。",
        "from": "T19n1022A_001:0710b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來俱胝如胡麻心陀羅尼印法要。",
        "from": "T19n1022A_001:0710b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今在其中。",
        "from": "T19n1022A_001:0710c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手有此法要在是中故。",
        "from": "T19n1022A_001:0710c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔即為如胡麻俱胝百千如來之身。",
        "from": "T19n1022A_001:0710c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是如胡麻百千俱胝如來全身舍利聚。",
        "from": "T19n1022A_001:0710c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至八萬四千法蘊亦住其中。",
        "from": "T19n1022A_001:0710c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是九十九百千俱胝如來頂相在其中。",
        "from": "T19n1022A_001:0710c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔一切如來之所授記。",
        "from": "T19n1022A_001:0710c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是塔所在之處。",
        "from": "T19n1022A_001:0710c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大功勳具大威德能滿一切吉慶。",
        "from": "T19n1022A_001:0710c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾聞佛是說。",
        "from": "T19n1022A_001:0710c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠塵離垢及隨煩惱。",
        "from": "T19n1022A_001:0710c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得法眼淨。",
        "from": "T19n1022A_001:0710c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中即有得須陀洹果者。",
        "from": "T19n1022A_001:0710c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得斯陀含果者。",
        "from": "T19n1022A_001:0710c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿那含果者。",
        "from": "T19n1022A_001:0710c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得阿羅漢果者。",
        "from": "T19n1022A_001:0710c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得辟支佛道者。",
        "from": "T19n1022A_001:0710c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有入菩薩位者。",
        "from": "T19n1022A_001:0710c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得阿鞞跋致者。",
        "from": "T19n1022A_001:0710c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得菩提授記者。",
        "from": "T19n1022A_001:0710c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有得初地二地乃至十地者。",
        "from": "T19n1022A_001:0710c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有滿足六波羅蜜者。",
        "from": "T19n1022A_001:0710c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其婆羅門遠塵離垢得五神通。",
        "from": "T19n1022A_001:0710c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩見此奇特希有之事白佛言。",
        "from": "T19n1022A_001:0710c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊甚奇特希有。",
        "from": "T19n1022A_001:0710c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但聞此事尚獲如是殊勝功德。",
        "from": "T19n1022A_001:0710c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況於此法要。",
        "from": "T19n1022A_001:0710c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種殖善根獲大福聚。",
        "from": "T19n1022A_001:0710c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T19n1022A_001:0710c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽金剛手。",
        "from": "T19n1022A_001:0710c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人比丘比丘尼優婆塞優婆夷。",
        "from": "T19n1022A_001:0710c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫此經典者。",
        "from": "T19n1022A_001:0710c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為書寫彼九十九百千俱胝如胡麻如來所說經典。",
        "from": "T19n1022A_001:0710c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於彼九十九百千俱胝如胡麻如來。",
        "from": "T19n1022A_001:0710c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種殖善根。",
        "from": "T19n1022A_001:0710c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為彼等如來護念攝受。",
        "from": "T19n1022A_001:0710c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人讀誦。",
        "from": "T19n1022A_001:0710c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為讀誦過去一切諸佛所說經典。",
        "from": "T19n1022A_001:0710c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受持此經。",
        "from": "T19n1022A_001:0710c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即彼十方九十九百千俱胝如胡麻如來應正等覺。",
        "from": "T19n1022A_001:0710c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切如來一一方所。",
        "from": "T19n1022A_001:0710c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遙加攝護晝夜現身。",
        "from": "T19n1022A_001:0710c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人供養此經。",
        "from": "T19n1022A_001:0710c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以花香塗香花鬘衣服嚴具而供養者。",
        "from": "T19n1022A_001:0711a01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於彼十方九十九百千俱胝如來之前。",
        "from": "T19n1022A_001:0711a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成天妙花妙香衣服嚴具。",
        "from": "T19n1022A_001:0711a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶所成積如須彌。",
        "from": "T19n1022A_001:0711a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為供養。",
        "from": "T19n1022A_001:0711a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種殖善根亦復如是。",
        "from": "T19n1022A_001:0711a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天龍八部人非人等。",
        "from": "T19n1022A_001:0711a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見聞是已各懷希奇。",
        "from": "T19n1022A_001:0711a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相謂言。",
        "from": "T19n1022A_001:0711a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奇哉威德。",
        "from": "T19n1022A_001:0711a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是朽土聚以如來神力所加持故。",
        "from": "T19n1022A_001:0711a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有是神變。",
        "from": "T19n1022A_001:0711a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時金剛手白佛言。",
        "from": "T19n1022A_001:0711a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何因緣故。",
        "from": "T19n1022A_001:0711a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是七寶塔現為土聚。",
        "from": "T19n1022A_001:0711a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022A_001:0711a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此非土聚乃是七寶所成大寶塔耳。",
        "from": "T19n1022A_001:0711a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次金剛手由諸眾生業果故隱。",
        "from": "T19n1022A_001:0711a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非如來全身而可毀壞。",
        "from": "T19n1022A_001:0711a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈有如來金剛藏身而可壞也。",
        "from": "T19n1022A_001:0711a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以眾生業果因緣。",
        "from": "T19n1022A_001:0711a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示現隱耳。",
        "from": "T19n1022A_001:0711a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次金剛手。",
        "from": "T19n1022A_001:0711a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後世末法逼迫時。",
        "from": "T19n1022A_001:0711a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多有眾生習行非法。",
        "from": "T19n1022A_001:0711a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應墮地獄。",
        "from": "T19n1022A_001:0711a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求佛法僧不種殖善根。",
        "from": "T19n1022A_001:0711a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣妙法當隱。",
        "from": "T19n1022A_001:0711a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯除此塔。",
        "from": "T19n1022A_001:0711a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切如來神力所持故。",
        "from": "T19n1022A_001:0711a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是事故我今流淚。",
        "from": "T19n1022A_001:0711a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼諸如來亦以是事悉皆流淚。",
        "from": "T19n1022A_001:0711a16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩白佛言。",
        "from": "T19n1022A_001:0711a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊若有人書寫此經安置塔中獲幾所福。",
        "from": "T19n1022A_001:0711a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022A_001:0711a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人書寫此經置塔中者。",
        "from": "T19n1022A_001:0711a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是塔即為一切如來金剛藏窣堵波。",
        "from": "T19n1022A_001:0711a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來陀羅尼心祕密加持窣堵波。",
        "from": "T19n1022A_001:0711a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為九十九百千俱胝如胡麻如來窣堵波。",
        "from": "T19n1022A_001:0711a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為一切如來佛頂佛眼窣堵波。",
        "from": "T19n1022A_001:0711a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為一切如來神力所護。",
        "from": "T19n1022A_001:0711a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於佛形像中安置。",
        "from": "T19n1022A_001:0711a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及於一切窣堵波中。",
        "from": "T19n1022A_001:0711a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置此經者。",
        "from": "T19n1022A_001:0711a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像即為七寶所成。",
        "from": "T19n1022A_001:0711a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其窣堵波亦為七寶傘蓋。",
        "from": "T19n1022A_001:0711a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠網露槃交結德字鈴鐸純為七寶。",
        "from": "T19n1022A_001:0711a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來於此法要加其威力。",
        "from": "T19n1022A_001:0711a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以誠實言本誓加持。",
        "from": "T19n1022A_001:0711a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有有情能於此塔種殖善根。",
        "from": "T19n1022A_001:0711a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必定於阿耨多羅三藐三菩提得不退轉。",
        "from": "T19n1022A_001:0711a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至應墮阿鼻地獄若於此塔一禮拜一圍遶必得解脫。",
        "from": "T19n1022A_001:0711b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得不退轉於阿耨多羅三藐三菩提。",
        "from": "T19n1022A_001:0711b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塔及形像所在之處。",
        "from": "T19n1022A_001:0711b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來神力所護。",
        "from": "T19n1022A_001:0711b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處不為惡風雷雹霹靂所害。",
        "from": "T19n1022A_001:0711b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復不為毒蛇毒蟲毒獸所傷。",
        "from": "T19n1022A_001:0711b04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為惡星怪鳥鸚鵡鴝鵒蟲鼠虎狼蜂蠆之所傷害。",
        "from": "T19n1022A_001:0711b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無夜叉羅剎部多比舍遮癲癎之怖。",
        "from": "T19n1022A_001:0711b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為一切寒熱諸病癧瘻癰毒瘡癬疥癩所染。",
        "from": "T19n1022A_001:0711b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人暫見是塔一切皆除。",
        "from": "T19n1022A_001:0711b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處亦無人馬牛疫童子童女疫。",
        "from": "T19n1022A_001:0711b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為非命所夭。",
        "from": "T19n1022A_001:0711b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為刀杖水火所傷。",
        "from": "T19n1022A_001:0711b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不為他敵所侵。",
        "from": "T19n1022A_001:0711b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢饉所逼。",
        "from": "T19n1022A_001:0711b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭魅呪詛不能得便。",
        "from": "T19n1022A_001:0711b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王與諸眷屬。",
        "from": "T19n1022A_001:0711b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜衛護。",
        "from": "T19n1022A_001:0711b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十八部大藥叉將。",
        "from": "T19n1022A_001:0711b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及日月𧘂暈彗星晝夜護持。",
        "from": "T19n1022A_001:0711b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切龍王加其精氣順時降雨。",
        "from": "T19n1022A_001:0711b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天與忉利天三時下來。",
        "from": "T19n1022A_001:0711b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為供養禮拜塔故。",
        "from": "T19n1022A_001:0711b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸仙三時來集讚詠旋遶。",
        "from": "T19n1022A_001:0711b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋提桓因與諸天女。",
        "from": "T19n1022A_001:0711b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜三時來下供養。",
        "from": "T19n1022A_001:0711b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處即為一切如來護念加持。",
        "from": "T19n1022A_001:0711b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人作塔或土石木金銀赤銅。",
        "from": "T19n1022A_001:0711b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書此法要安置其中。",
        "from": "T19n1022A_001:0711b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔安置已其塔即為七寶所成。",
        "from": "T19n1022A_001:0711b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下階陛露槃傘蓋鈴鐸網綴純為七寶。",
        "from": "T19n1022A_001:0711b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其塔四方如來形像亦復如是。",
        "from": "T19n1022A_001:0711b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則一切如來神力所持。",
        "from": "T19n1022A_001:0711b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其七寶塔大全身舍利藏。",
        "from": "T19n1022A_001:0711b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高至阿迦尼吒天宮。",
        "from": "T19n1022A_001:0711b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸天守衛供養。",
        "from": "T19n1022A_001:0711b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手白佛言。",
        "from": "T19n1022A_001:0711b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊何因緣故此法。",
        "from": "T19n1022A_001:0711b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是殊勝功德。",
        "from": "T19n1022A_001:0711b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告金剛手。",
        "from": "T19n1022A_001:0711b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此寶篋陀羅尼威神力故。",
        "from": "T19n1022A_001:0711b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手言。",
        "from": "T19n1022A_001:0711b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願如來。",
        "from": "T19n1022A_001:0711b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀愍我等說是陀羅尼。",
        "from": "T19n1022A_001:0711b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T19n1022A_001:0711b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽金剛手。",
        "from": "T19n1022A_001:0711b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是一切如來未來現在及已般涅槃者全身舍利。",
        "from": "T19n1022A_001:0711b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆在寶篋陀羅尼中。",
        "from": "T19n1022A_001:0711b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸如來所有三身亦在是中。",
        "from": "T19n1022A_001:0711b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說陀羅尼曰。",
        "from": "T19n1022A_001:0711c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫悉怛哩野四合地尾二合迦南一薩婆怛他引蘖多南二唵三部尾婆嚩娜嚩𠼝四嚩者𠼝五者者𪘨六知皆反祖魯祖魯馱囉馱囉七薩嚩怛他蘖多八馱引都馱𠼝鉢蹋𤚥二合婆嚩底九惹也嚩犁十畝祖犁薩麼二合囉十一怛他蘖多達摩斫迦囉二合十二鉢囉二合靺㗚哆二合娜嚩日哩二合犂音冒地滿拏十三楞迦引囉引十四楞訖哩二合諦十五薩嚩怛他󰋲多引地瑟恥二合下同諦十六冒馱野冒馱野十七冒地冒地十八沒𠆙沒𠆙十九參冒馱耶參冒馱野二十者攞者攞二十一者懶覩二十二薩嚩嚩囉拏儞二十三薩嚩播引波尾蘖諦二十四戶嚕戶嚕二十五薩嚩戍迦弭󰋲帝二十六薩嚩怛他蘖多二十七紇哩二合下同那野嚩日哩二合抳二十八參婆囉參婆囉二十九薩嚩怛他󰋲多三十麌呬野二合馱囉抳畝涅犁下同三十一沒悌蘇沒悌三十二薩嚩怛他󰋲多引地瑟恥多三十三馱覩󰋲陛娑嚩二合訶三十四參摩耶引地瑟恥二合帝娑嚩二合訶三十五薩嚩怛他󰋲多紇哩二合那野馱覩畝捺𠼝二合娑嚩二合訶三十六蘇鉢囉二合底瑟恥二合多薩覩二合閉怛他󰋲多引地瑟恥二合帝戶嚕戶嚕吽吽薩嚩二合訶三十七唵薩嚩怛他󰋲多三十八塢瑟抳二合沙馱都畝捺囉二合尼薩嚩怛他󰋲單娑馱都尾部使多引地瑟恥二合帝三十九吽吽娑嚩二合訶四十爾時世尊說是陀羅尼時。",
        "from": "T19n1022A_001:0711c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從朽塔處有七寶窣堵波自然涌出。",
        "from": "T19n1022A_001:0712a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高廣嚴飾莊嚴微妙放大光明。",
        "from": "T19n1022A_001:0712a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼十方九十九百千俱胝那庾多如來。",
        "from": "T19n1022A_001:0712a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來稱讚釋迦牟尼佛各作是言。",
        "from": "T19n1022A_001:0712a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉釋迦如來。",
        "from": "T19n1022A_001:0712a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能說如是廣大法要。",
        "from": "T19n1022A_001:0712a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置如是法藏。",
        "from": "T19n1022A_001:0712a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於閻浮提令諸眾生利樂安隱。",
        "from": "T19n1022A_001:0712a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T19n1022A_001:0712a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安此法要。",
        "from": "T19n1022A_001:0712a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置此陀羅尼於塔像中者。",
        "from": "T19n1022A_001:0712a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等十方諸佛。",
        "from": "T19n1022A_001:0712a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其方處恒常隨逐。",
        "from": "T19n1022A_001:0712a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切時。",
        "from": "T19n1022A_001:0712a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以神通力及誓願力加持護念。",
        "from": "T19n1022A_001:0712a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說此大全身舍利寶篋印陀羅尼。",
        "from": "T19n1022A_001:0712a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作佛事已。",
        "from": "T19n1022A_001:0712a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後往彼婆羅門家。",
        "from": "T19n1022A_001:0712a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受諸供養。",
        "from": "T19n1022A_001:0712a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令無數天人獲大福利已。",
        "from": "T19n1022A_001:0712a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却還所住。",
        "from": "T19n1022A_001:0712a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大眾比丘比丘尼優婆塞優婆夷天龍夜叉健闥婆阿修羅迦樓羅緊那羅摩睺羅伽人非人等。",
        "from": "T19n1022A_001:0712a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜信受奉行。",
        "from": "T19n1022A_001:0712a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來心祕密全身舍利寶篋印陀羅尼經􄖩􄗰􈅾􈉀􄑀􈁀􄙺􅞣􄕗􄕤􄑘􄕗􈁀􇩂􄗝􄙘􄗙􄙖􄕯􄙖􄙀􄙖􄑼􄙀􄙖􄑼􄓡􈂼􄙂􇥗􄕻􄗽􇥗􄙺􅞣􄕗􄕤􄑘􄕗􄕼􄕛􄕻􄙀􄖵􅇣􄗙􄙖􄕙􄒶􄗱􄙖􄙀􈁃􄩸􅋌􄗽􄕗􄕤􄑘􄕗􄕻􈆺􄑼􄥇􄪼􄙖􇪱􄖩􄙖􄦿􄗕􄕽􄙖􄕋􈅞􄑀􄗽􈅞􆮧􄕝􄙺􅞣􄕗􄕤􄑘􄕘􄕽􆵍􄕝􄗕􄕻􄗱􇥗􄗕􄕽􇥗􈎭􈁙􇥗􄚦􄗕􄕻􄖫􄚦􄗕􄕻􄗱􄑼􄙊􇥗􄑼􄙔􄕛􄙺􅞤􄙖􄗽􄕋􄖫􄙺􅞣􄖶􄖵􄙘􄑘􄕝􈂪􄙂􇥗􄙺􅞣􄙪􄑀􄙘􄑘􄕝􄙺􅞣􄕗􄕤􄑘􄕗􆱨􄕯􄗱􄙖􄦽􄕍􄚦􄗙􄗽􇥗􄙺􅞣􄕗􄕤􄑘􄕗􄑜􈃃􄕻􄗽􄕍􈁃􄩸􈎭􄕝􈂼􈎭􄕝􄙺􅞣􄕗􄕤􄑘􄕘􄕽􆵍􄕗􄕼􄕛􄑘􅝗􅁥􄚩􄙺􄗥􄗲􄕽􆵍􄕝􅁥􄚩􄙺􅞣􄕗􄕤􄑘􄕗􆱨􄕯􄗱􄕼􄕛􈁃􄩸􅁥􄚩􈂼􄪼􄕙􆶭􄗟􄕗􄕤􄑘􄕘􄕽􆵍􄕝􈂪􄙂􇥗􈅼􈅼􅁥􄚩􇩂􄙺􅞣􄕗􄕤􄑘􄕗􇇳􈃇􄙮􄕼􄕛􈁃􄩷􄕍􄙺􅞣􄕗􄕤􄑘􄕡􄙺􄕻􄕛􄙘􄗡􄙰􄕘􄕽􆵍􄕝􈅼􈅼􅁥􄚩",
