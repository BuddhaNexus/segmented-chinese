[
    {
        "source_sentence": "佛說灌頂王喻經",
        "from": "T04n0218_001:0801c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝奉大夫",
        "from": "T04n0218_001:0801c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試光祿卿傳法大師賜紫",
        "from": "T04n0218_001:0801c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臣施護等奉　詔譯爾時世尊，在舍衛國，以因緣故，告諸苾芻言：",
        "from": "T04n0218_001:0801c19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝等當知，有三剎帝利王，於三時中，在於某方，受王灌頂；",
        "from": "T04n0218_001:0801c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而彼三王，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0801c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為三？",
        "from": "T04n0218_001:0801c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂第一王，年方少盛，依灌頂法，在於某方，受王灌頂；",
        "from": "T04n0218_001:0801c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得灌頂已，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0801c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又第二王，功力漸大，依灌頂法，在於某方，受王灌頂；",
        "from": "T04n0218_001:0801c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得灌頂已，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0801c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又第三王，有大威力，戰勇最勝，一切對敵，而悉信伏；",
        "from": "T04n0218_001:0801c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以最勝故，得勝安住，依灌頂法，在於某方，受王灌頂；",
        "from": "T04n0218_001:0801c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得灌頂已，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0801c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝諸苾芻，亦復如是，於三時中，在於某方，作修證事，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0802a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為三？",
        "from": "T04n0218_001:0802a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂有苾芻，發正信心，捨家出家，剃除鬚髮，被袈裟衣；",
        "from": "T04n0218_001:0802a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為第一，在於某方，修苾芻事，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0802a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有苾芻，修諸勝行，為證滅故，斷諸集法；",
        "from": "T04n0218_001:0802a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是知已，遠塵離垢，於諸法中，得法眼淨；",
        "from": "T04n0218_001:0802a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為第二，在於某方，修苾芻事，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0802a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有苾芻，諸漏已盡，非漏隨增，心善解脫，慧善解脫，自智所證，已得成就，我生已盡，梵行已立，所作已辦，不受後有；",
        "from": "T04n0218_001:0802a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為第三，在於某方，證聖果事，乃至盡壽，常所思念。",
        "from": "T04n0218_001:0802a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說灌頂王喻經",
        "from": "T04n0218_001:0802a13_100",
        "context_with_next_sentence": false
    }
]