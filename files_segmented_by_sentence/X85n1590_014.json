{
    "X85n1590_014:0191a03_0": "錦江禪燈卷第十四",
    "X85n1590_014:0191a05_0": "昭覺丈雪　通醉　輯",
    "X85n1590_014:0191a06_0": "紹興幻菴　胡昇猷　訂",
    "X85n1590_014:0191a07_0": "　　大鑒下第三十七世",
    "X85n1590_014:0191a08_0": "自閒賢法嗣",
    "X85n1590_014:0191a09_0": "霍山憨余暹禪師西充王氏子。",
    "X85n1590_014:0191a09_1": "參徧尊宿。",
    "X85n1590_014:0191a09_2": "末後入自閒和尚室。",
    "X85n1590_014:0191a10_3": "始嗣法焉。",
    "X85n1590_014:0191a10_4": "出住晉之霍山。",
    "X85n1590_014:0191a10_5": "解制上堂。",
    "X85n1590_014:0191a10_6": "結却布袋九旬終。",
    "X85n1590_014:0191a11_7": "今日解開八面通。",
    "X85n1590_014:0191a11_8": "衲子通身是手眼。",
    "X85n1590_014:0191a11_9": "拿雲攫霧把清風。",
    "X85n1590_014:0191a12_10": "諸禪客好奇逢。",
    "X85n1590_014:0191a12_11": "白雲聚散滿晴空。",
    "X85n1590_014:0191a12_12": "脚底芒鞋獰似虎。",
    "X85n1590_014:0191a13_13": "肩頭拄杖活如龍。",
    "X85n1590_014:0191a13_14": "上堂。",
    "X85n1590_014:0191a13_15": "結制解制。",
    "X85n1590_014:0191a13_16": "諸方舊例。",
    "X85n1590_014:0191a14_17": "佛祖家風。",
    "X85n1590_014:0191a14_18": "一場特地。",
    "X85n1590_014:0191a14_19": "九旬把住牢關。",
    "X85n1590_014:0191a14_20": "勘驗聖凡禁忌。",
    "X85n1590_014:0191a15_21": "不容走作絲毫。",
    "X85n1590_014:0191a15_22": "煅煉衲僧巴鼻。",
    "X85n1590_014:0191a15_23": "剿絕異想偷心。",
    "X85n1590_014:0191a16_24": "必然脚跟點地。",
    "X85n1590_014:0191a16_25": "一任吒呀哮吼。",
    "X85n1590_014:0191a16_26": "管教山搖地震。",
    "X85n1590_014:0191a16_27": "當報不報之恩。",
    "X85n1590_014:0191a17_28": "共助無為之化。",
    "X85n1590_014:0191a17_29": "上堂。",
    "X85n1590_014:0191a17_30": "紅塵閙市。",
    "X85n1590_014:0191a17_31": "全彰古佛心宗。",
    "X85n1590_014:0191a18_32": "身色堆頭。",
    "X85n1590_014:0191a18_33": "獨露祖師巴鼻。",
    "X85n1590_014:0191a18_34": "平泉兩岸。",
    "X85n1590_014:0191a18_35": "烟籠水月光新。",
    "X85n1590_014:0191a19_36": "姑射峰頭。",
    "X85n1590_014:0191a19_37": "彩散白雲影秀。",
    "X85n1590_014:0191a19_38": "花街柳巷觀音院。",
    "X85n1590_014:0191a20_0": "酒肆婬房彌勒家。",
    "X85n1590_014:0191a21_0": "雲峩喜法嗣",
    "X85n1590_014:0191a22_0": "斌雅禪師潼川人。",
    "X85n1590_014:0191a22_1": "嗣法于風穴雲峩禪師。",
    "X85n1590_014:0191a22_2": "住法海寺。",
    "X85n1590_014:0191a23_0": "上堂。",
    "X85n1590_014:0191a23_1": "法海自住以來。",
    "X85n1590_014:0191a23_2": "不肯攙行奪市。",
    "X85n1590_014:0191a23_3": "列土分茅。",
    "X85n1590_014:0191a23_4": "將天地作一禪堂。",
    "X85n1590_014:0191a24_5": "行與諸人同行。",
    "X85n1590_014:0191a24_6": "住與諸人共住。",
    "X85n1590_014:0191a24_7": "二六時中著衣喫飯。",
    "X85n1590_014:0191b01_8": "運水搬柴。",
    "X85n1590_014:0191b01_9": "舉措施為。",
    "X85n1590_014:0191b01_10": "了無障礙。",
    "X85n1590_014:0191b01_11": "乃至明暗色空。",
    "X85n1590_014:0191b02_12": "森羅萬象。",
    "X85n1590_014:0191b02_13": "若智若愚。",
    "X85n1590_014:0191b02_14": "各依本分。",
    "X85n1590_014:0191b02_15": "然雖如是。",
    "X85n1590_014:0191b02_16": "更有一人不入保社。",
    "X85n1590_014:0191b03_17": "淨裸裸絕囊藏。",
    "X85n1590_014:0191b03_18": "赤洒洒無向背。",
    "X85n1590_014:0191b03_19": "有時孤峰頂上嘯月吟風。",
    "X85n1590_014:0191b04_20": "有時閙市街前神頭鬼面。",
    "X85n1590_014:0191b04_21": "舌拄梵天。",
    "X85n1590_014:0191b05_22": "眼空四海。",
    "X85n1590_014:0191b05_23": "動若行雲。",
    "X85n1590_014:0191b05_24": "止猶谷神。",
    "X85n1590_014:0191b05_25": "以拂子打圓相云。",
    "X85n1590_014:0191b06_26": "還識此人麼。",
    "X85n1590_014:0191b06_27": "平生肝膽向人傾。",
    "X85n1590_014:0191b06_28": "相識還如不相識。",
    "X85n1590_014:0191b07_29": "靈臺寺上堂。",
    "X85n1590_014:0191b07_30": "一句無私。",
    "X85n1590_014:0191b07_31": "斬釘截銕。",
    "X85n1590_014:0191b07_32": "萬機休罷。",
    "X85n1590_014:0191b07_33": "逈脫羅籠。",
    "X85n1590_014:0191b08_34": "隨流得玅。",
    "X85n1590_014:0191b08_35": "千里同風。",
    "X85n1590_014:0191b08_36": "大用現前。",
    "X85n1590_014:0191b08_37": "逢場作戲。",
    "X85n1590_014:0191b08_38": "玉鑑含秋。",
    "X85n1590_014:0191b09_39": "氷潭落影。",
    "X85n1590_014:0191b09_40": "龍泉出匣。",
    "X85n1590_014:0191b09_41": "萬里橫尸。",
    "X85n1590_014:0191b09_42": "大火聚豈容湊泊。",
    "X85n1590_014:0191b10_43": "金剛圈不許撮挐。",
    "X85n1590_014:0191b10_44": "撥著便轉。",
    "X85n1590_014:0191b10_45": "已墮功勛。",
    "X85n1590_014:0191b10_46": "提得即行。",
    "X85n1590_014:0191b11_0": "早成途轍。",
    "X85n1590_014:0191b11_1": "具如是之玅見。",
    "X85n1590_014:0191b11_2": "作苦海之舟航。",
    "X85n1590_014:0191b11_3": "隱顯全彰。",
    "X85n1590_014:0191b12_0": "文軌一致。",
    "X85n1590_014:0191b12_1": "封村寺上堂。",
    "X85n1590_014:0191b12_2": "春深物茂。",
    "X85n1590_014:0191b12_3": "日暖風和。",
    "X85n1590_014:0191b12_4": "燕喜鶯歡。",
    "X85n1590_014:0191b13_5": "時清道泰。",
    "X85n1590_014:0191b13_6": "般若流通。",
    "X85n1590_014:0191b13_7": "法元無隱。",
    "X85n1590_014:0191b13_8": "擊禪床云。",
    "X85n1590_014:0191b13_9": "聲不是聲。",
    "X85n1590_014:0191b14_10": "徒勞側耳。",
    "X85n1590_014:0191b14_11": "色不是色。",
    "X85n1590_014:0191b14_12": "難為撿別。",
    "X85n1590_014:0191b14_13": "海寶寺上堂。",
    "X85n1590_014:0191b14_14": "披霜躡屩。",
    "X85n1590_014:0191b15_15": "雲路三千。",
    "X85n1590_014:0191b15_16": "全身放下。",
    "X85n1590_014:0191b15_17": "理合瀟然。",
    "X85n1590_014:0191b15_18": "袖裏金鎚當陽拋出。",
    "X85n1590_014:0191b16_19": "毗耶丈室八字打開。",
    "X85n1590_014:0191b16_20": "住其中者。",
    "X85n1590_014:0191b16_21": "握閫外威權。",
    "X85n1590_014:0191b16_22": "鈎頭有餌。",
    "X85n1590_014:0191b17_23": "施佛祖照用。",
    "X85n1590_014:0191b17_24": "秤衡無星。",
    "X85n1590_014:0191b17_25": "開人天正眼。",
    "X85n1590_014:0191b17_26": "驗衲僧巴鼻。",
    "X85n1590_014:0191b18_27": "若是識機宜別休咎。",
    "X85n1590_014:0191b18_28": "撩起便行。",
    "X85n1590_014:0191b18_29": "脚跟下好與三十。",
    "X85n1590_014:0191b19_30": "何也。",
    "X85n1590_014:0191b19_31": "海寶門下。",
    "X85n1590_014:0191b19_32": "令不虗行。",
    "X85n1590_014:0191b20_0": "憨休乾禪師蜀西龍安胡氏子。",
    "X85n1590_014:0191b20_1": "十九脫白。",
    "X85n1590_014:0191b20_2": "二十圓戒。",
    "X85n1590_014:0191b21_0": "徧參諸方。",
    "X85n1590_014:0191b21_1": "各有會處。",
    "X85n1590_014:0191b21_2": "康熙丁未。",
    "X85n1590_014:0191b21_3": "詣少林禮祖墖。",
    "X85n1590_014:0191b21_4": "過風穴參雲峩和尚。",
    "X85n1590_014:0191b22_5": "機緣相契。",
    "X85n1590_014:0191b22_6": "乃授記莂。",
    "X85n1590_014:0191b22_7": "癸丑開法涇陽興福禪寺。",
    "X85n1590_014:0191b23_8": "眾請入院上堂。",
    "X85n1590_014:0191b23_9": "撥艸瞻風二十秋。",
    "X85n1590_014:0191b23_10": "全機不動信優游。",
    "X85n1590_014:0191b24_11": "無端扶上華王座。",
    "X85n1590_014:0191b24_12": "擘破三元接上流。",
    "X85n1590_014:0191b24_13": "宗乘一唱。",
    "X85n1590_014:0191c01_14": "三藏絕詮。",
    "X85n1590_014:0191c01_15": "至道恢弘。",
    "X85n1590_014:0191c01_16": "千途合轍。",
    "X85n1590_014:0191c01_17": "眾流截斷。",
    "X85n1590_014:0191c01_18": "遍塵剎而任運全該。",
    "X85n1590_014:0191c02_19": "玅轉元樞。",
    "X85n1590_014:0191c02_20": "括有無而憑垂指注。",
    "X85n1590_014:0191c02_21": "光超日月。",
    "X85n1590_014:0191c03_22": "智出聖凡。",
    "X85n1590_014:0191c03_23": "動靜無私。",
    "X85n1590_014:0191c03_24": "隱顯不昧。",
    "X85n1590_014:0191c03_25": "髑髏常干世界。",
    "X85n1590_014:0191c04_0": "鼻孔摩觸家風。",
    "X85n1590_014:0191c04_1": "綿密安祥。",
    "X85n1590_014:0191c04_2": "權開洞山五位。",
    "X85n1590_014:0191c04_3": "暗機圓合。",
    "X85n1590_014:0191c05_0": "要出溈仰三生。",
    "X85n1590_014:0191c05_1": "一字關大雲門之高古。",
    "X85n1590_014:0191c05_2": "六相義挕法眼之現成。",
    "X85n1590_014:0191c06_3": "奪境奪人。",
    "X85n1590_014:0191c06_4": "直捷痛快。",
    "X85n1590_014:0191c06_5": "立賓立主。",
    "X85n1590_014:0191c06_6": "大用天旋。",
    "X85n1590_014:0191c07_0": "印水印泥印空。",
    "X85n1590_014:0191c07_1": "匪作家難辨。",
    "X85n1590_014:0191c07_2": "非心非佛非物。",
    "X85n1590_014:0191c07_3": "唯證乃知。",
    "X85n1590_014:0191c08_4": "似地普擎。",
    "X85n1590_014:0191c08_5": "如天普葢。",
    "X85n1590_014:0191c08_6": "真機剖露。",
    "X85n1590_014:0191c08_7": "萬法全彰。",
    "X85n1590_014:0191c08_8": "正恁麼時。",
    "X85n1590_014:0191c09_9": "且道即今開堂祝聖一句。",
    "X85n1590_014:0191c09_10": "作麼生道。",
    "X85n1590_014:0191c09_11": "擊壤歌揚忘帝力。",
    "X85n1590_014:0191c10_12": "由賡詩詠樂時雍。",
    "X85n1590_014:0191c11_0": "宕山法法嗣",
    "X85n1590_014:0191c12_0": "孤月朗禪師合州楊氏子。",
    "X85n1590_014:0191c12_1": "歷徧諸方。",
    "X85n1590_014:0191c12_2": "值箬菴和尚打徹。",
    "X85n1590_014:0191c13_3": "遇宕山禪師印證。",
    "X85n1590_014:0191c13_4": "住桃源瑞麟院。",
    "X85n1590_014:0191c13_5": "上堂。",
    "X85n1590_014:0191c13_6": "只著芒鞋不用舟。",
    "X85n1590_014:0191c14_7": "脚跟下事愈沉浮。",
    "X85n1590_014:0191c14_8": "而今渴飲飢餐也。",
    "X85n1590_014:0191c14_9": "未卜橋流是水流。",
    "X85n1590_014:0191c15_10": "小參。",
    "X85n1590_014:0191c15_11": "驀豎拂子云。",
    "X85n1590_014:0191c15_12": "此是向上第一著。",
    "X85n1590_014:0191c15_13": "未會之人沒棲泊。",
    "X85n1590_014:0191c16_14": "權曰此事與君持。",
    "X85n1590_014:0191c16_15": "細細嚼來味似檗。",
    "X85n1590_014:0191c16_16": "放下拂子。",
    "X85n1590_014:0191c17_17": "拍膝一下。",
    "X85n1590_014:0191c18_0": "古宿尊禪師成都胡氏子。",
    "X85n1590_014:0191c18_1": "嗣法宕山和尚。",
    "X85n1590_014:0191c18_2": "浴佛上堂。",
    "X85n1590_014:0191c19_0": "日月兩莖燭。",
    "X85n1590_014:0191c19_1": "須彌一炷香。",
    "X85n1590_014:0191c19_2": "以斯成現物。",
    "X85n1590_014:0191c19_3": "供養法中王。",
    "X85n1590_014:0191c20_0": "顧眾云。",
    "X85n1590_014:0191c20_1": "此是山僧窮孝敬。",
    "X85n1590_014:0191c20_2": "汝等若有奇品異餚。",
    "X85n1590_014:0191c20_3": "不妨拈出。",
    "X85n1590_014:0191c21_4": "以報不報之恩。",
    "X85n1590_014:0191c21_5": "共祝覺皇之壽。",
    "X85n1590_014:0191c21_6": "供丹霞禪師像上堂。",
    "X85n1590_014:0191c22_7": "前釋迦不安。",
    "X85n1590_014:0191c22_8": "後彌勒不奉。",
    "X85n1590_014:0191c22_9": "單單供養天然老子。",
    "X85n1590_014:0191c23_0": "一不重伊智大才高。",
    "X85n1590_014:0191c23_1": "二不重伊道全德備。",
    "X85n1590_014:0191c23_2": "今所重者。",
    "X85n1590_014:0191c24_0": "是伊聽訃而別選。",
    "X85n1590_014:0191c24_1": "聞授戒而疾退。",
    "X85n1590_014:0191c24_2": "騎聖僧得號于馬祖。",
    "X85n1590_014:0192a01_3": "燒木佛禦寒于慧林。",
    "X85n1590_014:0192a01_4": "諸般去就且置。",
    "X85n1590_014:0192a01_5": "即今安位一句如何舉揚。",
    "X85n1590_014:0192a02_6": "拂一拂云。",
    "X85n1590_014:0192a02_7": "見聞戶牖無遮障。",
    "X85n1590_014:0192a02_8": "奪却龐公幞頭來。",
    "X85n1590_014:0192a03_9": "元宵上堂。",
    "X85n1590_014:0192a03_10": "執拄杖云。",
    "X85n1590_014:0192a03_11": "今年今月十五。",
    "X85n1590_014:0192a03_12": "不打尋常破鼓。",
    "X85n1590_014:0192a04_13": "剔起破暗明燈。",
    "X85n1590_014:0192a04_14": "且要人人盡覩。",
    "X85n1590_014:0192a04_15": "忽爾油盡燈殘作麼生。",
    "X85n1590_014:0192a05_16": "[妳-女+口]。",
    "X85n1590_014:0192a05_17": "杖頭有眼明如日。",
    "X85n1590_014:0192a05_18": "凹凸平夷任所之。",
    "X85n1590_014:0192a05_19": "聖泉除夕上堂。",
    "X85n1590_014:0192a06_20": "一年周歲三百六。",
    "X85n1590_014:0192a06_21": "逗到今宵剛數卒。",
    "X85n1590_014:0192a06_22": "戶戶釘桃符。",
    "X85n1590_014:0192a07_23": "家家燒爆竹。",
    "X85n1590_014:0192a07_24": "送舊者憨忙。",
    "X85n1590_014:0192a07_25": "薦亡者慟哭。",
    "X85n1590_014:0192a07_26": "好笑世間人。",
    "X85n1590_014:0192a08_27": "多被時緣逐。",
    "X85n1590_014:0192a08_28": "祇有聖泉僧。",
    "X85n1590_014:0192a08_29": "恬然似不覺。",
    "X85n1590_014:0192a08_30": "擲拄杖下座。",
    "X85n1590_014:0192a10_0": "大雄峰法嗣",
    "X85n1590_014:0192a11_0": "藪菴願禪師簡州謝氏子。",
    "X85n1590_014:0192a11_1": "中歲出家。",
    "X85n1590_014:0192a11_2": "嗣法大雄。",
    "X85n1590_014:0192a11_3": "住成都報國菴。",
    "X85n1590_014:0192a12_4": "昭覺老人設齋。",
    "X85n1590_014:0192a12_5": "上堂。",
    "X85n1590_014:0192a12_6": "報國初開法戰場。",
    "X85n1590_014:0192a12_7": "滿堂雲水破天荒。",
    "X85n1590_014:0192a13_8": "厨中儋石無儲也。",
    "X85n1590_014:0192a13_9": "自有高明共助揚。",
    "X85n1590_014:0192a14_0": "舉大慧杲和尚。",
    "X85n1590_014:0192a14_1": "至蔣山訪應菴華禪師。",
    "X85n1590_014:0192a14_2": "上堂舉牛過窗櫺話。",
    "X85n1590_014:0192a15_3": "者則公案。",
    "X85n1590_014:0192a15_4": "在蔣山肚內多年。",
    "X85n1590_014:0192a15_5": "若不是法叔老師抑揚小姪。",
    "X85n1590_014:0192a16_6": "一生不敢舉著。",
    "X85n1590_014:0192a16_7": "今日向人天眾前拈出。",
    "X85n1590_014:0192a17_0": "供養我法叔老師。",
    "X85n1590_014:0192a17_1": "召眾云。",
    "X85n1590_014:0192a17_2": "大眾。",
    "X85n1590_014:0192a17_3": "既是頭角四蹄俱過了。",
    "X85n1590_014:0192a18_4": "因甚尾巴過不得。",
    "X85n1590_014:0192a18_5": "誵訛在甚麼處。",
    "X85n1590_014:0192a18_6": "良久自代云。",
    "X85n1590_014:0192a18_7": "家家門前火把子。",
    "X85n1590_014:0192a19_8": "元來事同一家。",
    "X85n1590_014:0192a19_9": "共相唱和。",
    "X85n1590_014:0192a19_10": "所謂酒逢知己飲。",
    "X85n1590_014:0192a20_11": "詩向會人吟。",
    "X85n1590_014:0192a20_12": "願上座不敢舉古判今。",
    "X85n1590_014:0192a20_13": "茲是昭覺老人屈尊就卑。",
    "X85n1590_014:0192a21_14": "助揚法化。",
    "X85n1590_014:0192a21_15": "以佛法住持。",
    "X85n1590_014:0192a21_16": "且接物利生一句作麼生道。",
    "X85n1590_014:0192a22_17": "卓拄杖云。",
    "X85n1590_014:0192a22_18": "橫塘宿鷺斜飛起。",
    "X85n1590_014:0192a22_19": "數隻銀瓶挂樹梢。",
    "X85n1590_014:0192a24_0": "響谷法嗣",
    "X85n1590_014:0192b01_0": "金純寺眉雪宗禪師射洪謝氏子。",
    "X85n1590_014:0192b01_1": "嗣法于響谷禪師。",
    "X85n1590_014:0192b02_0": "上堂。",
    "X85n1590_014:0192b02_1": "山陰深秀游人少。",
    "X85n1590_014:0192b02_2": "野水重嵓一樣春。",
    "X85n1590_014:0192b02_3": "山野今日重開祖席。",
    "X85n1590_014:0192b03_4": "佛日再懸。",
    "X85n1590_014:0192b03_5": "把住則瓦礫眠雲。",
    "X85n1590_014:0192b03_6": "放行則燈籠起舞。",
    "X85n1590_014:0192b04_7": "爭似無生國裏王大博。",
    "X85n1590_014:0192b04_8": "取性高眠。",
    "X85n1590_014:0192b04_9": "逍遙快樂。",
    "X85n1590_014:0192b05_0": "凝真法嗣",
    "X85n1590_014:0192b06_0": "南隆西平寺天然慧禪師南充柳氏子。",
    "X85n1590_014:0192b06_1": "因蜀亂。",
    "X85n1590_014:0192b06_2": "混火隊中。",
    "X85n1590_014:0192b07_3": "十八歲厭世如幻。",
    "X85n1590_014:0192b07_4": "有出塵之志。",
    "X85n1590_014:0192b07_5": "禮如成薙染。",
    "X85n1590_014:0192b07_6": "圓具。",
    "X85n1590_014:0192b08_7": "參謁諸方。",
    "X85n1590_014:0192b08_8": "後依凝真和尚。",
    "X85n1590_014:0192b08_9": "深錐痛劄。",
    "X85n1590_014:0192b08_10": "死而復蘇。",
    "X85n1590_014:0192b08_11": "遂蒙印證。",
    "X85n1590_014:0192b09_12": "元旦上堂。",
    "X85n1590_014:0192b09_13": "時當元旦百事新。",
    "X85n1590_014:0192b09_14": "送去迎來見主賓。",
    "X85n1590_014:0192b10_15": "驀拈拄杖云。",
    "X85n1590_014:0192b10_16": "惟有者箇烏律律。",
    "X85n1590_014:0192b10_17": "不隨節令順人情。",
    "X85n1590_014:0192b11_0": "有時敲風兼打月。",
    "X85n1590_014:0192b11_1": "須彌頭裂滄海疼。",
    "X85n1590_014:0192b11_2": "駭起南山於菟走。",
    "X85n1590_014:0192b12_3": "株連北斗喫一驚。",
    "X85n1590_014:0192b12_4": "且道利害在甚麼處。",
    "X85n1590_014:0192b12_5": "復卓云。",
    "X85n1590_014:0192b12_6": "不是沙場經慣戰。",
    "X85n1590_014:0192b13_7": "怎豎旌旗百尺高。",
    "X85n1590_014:0192b13_8": "下座。",
    "X85n1590_014:0192b14_0": "快雪國法嗣",
    "X85n1590_014:0192b15_0": "蓮池聞禪師宕渠羅氏子。",
    "X85n1590_014:0192b15_1": "丱歲于含虗師處祝髮。",
    "X85n1590_014:0192b15_2": "廿歲詣方如和尚座下圓具。",
    "X85n1590_014:0192b16_3": "徧參歸保寧。",
    "X85n1590_014:0192b16_4": "建蓮池菴自休。",
    "X85n1590_014:0192b17_5": "一日快雪和尚過訪。",
    "X85n1590_014:0192b17_6": "機緣相叩。",
    "X85n1590_014:0192b17_7": "而記莂焉。",
    "X85n1590_014:0192b17_8": "仇居士供法衣上堂。",
    "X85n1590_014:0192b18_9": "法不孤起。",
    "X85n1590_014:0192b18_10": "仗境方生。",
    "X85n1590_014:0192b18_11": "六月炎天寒威凜烈。",
    "X85n1590_014:0192b19_12": "此是境。",
    "X85n1590_014:0192b19_13": "且道如何是法。",
    "X85n1590_014:0192b19_14": "提起衣示眾云。",
    "X85n1590_014:0192b19_15": "會麼。",
    "X85n1590_014:0192b19_16": "者衣線下事。",
    "X85n1590_014:0192b20_17": "人人具足。",
    "X85n1590_014:0192b20_18": "不可思議。",
    "X85n1590_014:0192b20_19": "阿誰欠少。",
    "X85n1590_014:0192b20_20": "何必向他家糞草堆頭。",
    "X85n1590_014:0192b21_21": "覓甚麼碗。",
    "X85n1590_014:0192b21_22": "所以道。",
    "X85n1590_014:0192b21_23": "不離當處常湛然。",
    "X85n1590_014:0192b21_24": "覓則知君不可見。",
    "X85n1590_014:0192b23_0": "雲嶠水法嗣",
    "X85n1590_014:0192b24_0": "蒼谷桂禪師湖廣荊州李氏子。",
    "X85n1590_014:0192b24_1": "丱歲禮幻識大師薙髮。",
    "X85n1590_014:0192c01_2": "年登廿稔。",
    "X85n1590_014:0192c01_3": "就本師圓具。",
    "X85n1590_014:0192c01_4": "徧參諸方。",
    "X85n1590_014:0192c01_5": "至雙桂與嶠和尚機緣相叩。",
    "X85n1590_014:0192c02_6": "而記莂焉。",
    "X85n1590_014:0192c02_7": "康熈丙寅。",
    "X85n1590_014:0192c02_8": "達州紳衿。",
    "X85n1590_014:0192c02_9": "請住龍興禪院。",
    "X85n1590_014:0192c03_10": "上堂。",
    "X85n1590_014:0192c03_11": "驀呈拄杖召眾云。",
    "X85n1590_014:0192c03_12": "會麼。",
    "X85n1590_014:0192c03_13": "者箇上拄天。",
    "X85n1590_014:0192c03_14": "下拄地。",
    "X85n1590_014:0192c04_15": "本自無名。",
    "X85n1590_014:0192c04_16": "誰敢強安。",
    "X85n1590_014:0192c04_17": "有時動地放光。",
    "X85n1590_014:0192c04_18": "明如杲日。",
    "X85n1590_014:0192c05_0": "有時泯跡潛踪。",
    "X85n1590_014:0192c05_1": "黑似墨漆。",
    "X85n1590_014:0192c05_2": "不屬青黃。",
    "X85n1590_014:0192c05_3": "方圓任器。",
    "X85n1590_014:0192c05_4": "能變能化。",
    "X85n1590_014:0192c06_5": "能橫能直。",
    "X85n1590_014:0192c06_6": "畢竟平等。",
    "X85n1590_014:0192c06_7": "殊堪倫匹。",
    "X85n1590_014:0192c06_8": "達古通今。",
    "X85n1590_014:0192c06_9": "竪窮三際。",
    "X85n1590_014:0192c07_10": "復橫按拄杖云。",
    "X85n1590_014:0192c07_11": "戒定慧祖師關。",
    "X85n1590_014:0192c07_12": "恰好都盧一串穿。",
    "X85n1590_014:0192c08_13": "又卓云。",
    "X85n1590_014:0192c08_14": "還會麼。",
    "X85n1590_014:0192c08_15": "于斯薦得。",
    "X85n1590_014:0192c08_16": "無量法門河沙妙義。",
    "X85n1590_014:0192c08_17": "從此建立。",
    "X85n1590_014:0192c09_18": "其或未然。",
    "X85n1590_014:0192c09_19": "更買草鞋行脚始得。",
    "X85n1590_014:0192c10_0": "大鑒下第三十八世",
    "X85n1590_014:0192c11_0": "石谷慧法嗣",
    "X85n1590_014:0192c12_0": "羅漢雲林地禪師通江董氏子。",
    "X85n1590_014:0192c12_1": "禮心田師削染。",
    "X85n1590_014:0192c12_2": "參石谷和尚。",
    "X85n1590_014:0192c13_3": "以嗣法。",
    "X85n1590_014:0192c13_4": "重建[障-音]邡羅漢寺。",
    "X85n1590_014:0192c13_5": "乃馬祖一禪師脫白處也。",
    "X85n1590_014:0192c14_6": "上堂。",
    "X85n1590_014:0192c14_7": "問如何是羅漢境。",
    "X85n1590_014:0192c14_8": "師云。",
    "X85n1590_014:0192c14_9": "參天蒼竹密。",
    "X85n1590_014:0192c14_10": "填空古栢稠。",
    "X85n1590_014:0192c15_11": "進云。",
    "X85n1590_014:0192c15_12": "如何是境中人。",
    "X85n1590_014:0192c15_13": "師云。",
    "X85n1590_014:0192c15_14": "大雄殿一座。",
    "X85n1590_014:0192c15_15": "頭陀祇十人。",
    "X85n1590_014:0192c16_16": "進云。",
    "X85n1590_014:0192c16_17": "人境不立時如何。",
    "X85n1590_014:0192c16_18": "師云。",
    "X85n1590_014:0192c16_19": "虧汝到與麼境界。",
    "X85n1590_014:0192c17_20": "乃云。",
    "X85n1590_014:0192c17_21": "一棒一喝。",
    "X85n1590_014:0192c17_22": "一拳一脚。",
    "X85n1590_014:0192c17_23": "直指臨濟心髓。",
    "X85n1590_014:0192c17_24": "全彰德山韜略。",
    "X85n1590_014:0192c18_25": "古之不多一點。",
    "X85n1590_014:0192c18_26": "今之不少一劃。",
    "X85n1590_014:0192c18_27": "全得艸偃風行。",
    "X85n1590_014:0192c19_28": "如虎戴角。",
    "X85n1590_014:0192c19_29": "撞著磕著。",
    "X85n1590_014:0192c19_30": "橫機殺活。",
    "X85n1590_014:0192c19_31": "脫或未然。",
    "X85n1590_014:0192c19_32": "山僧未免重下註脚。",
    "X85n1590_014:0192c20_33": "以拄杖卓一卓。",
    "X85n1590_014:0192c20_34": "喝一喝。",
    "X85n1590_014:0192c20_35": "也是千錯與萬錯。",
    "X85n1590_014:0192c21_36": "復卓云。",
    "X85n1590_014:0192c21_37": "錯錯。",
    "X85n1590_014:0192c22_0": "淨居月目初禪師樂至鄒氏子。",
    "X85n1590_014:0192c22_1": "丱歲于巴岳寺落[髟/采]。",
    "X85n1590_014:0192c23_0": "參石谷和尚圓具。",
    "X85n1590_014:0192c23_1": "復受記莂。",
    "X85n1590_014:0192c23_2": "後住龍門淨居寺。",
    "X85n1590_014:0192c23_3": "上堂。",
    "X85n1590_014:0192c24_0": "僧問。",
    "X85n1590_014:0192c24_1": "如何是龍門境。",
    "X85n1590_014:0192c24_2": "師云。",
    "X85n1590_014:0192c24_3": "清風橋下兩池水。",
    "X85n1590_014:0192c24_4": "進云。",
    "X85n1590_014:0192c24_5": "如何是境中人。",
    "X85n1590_014:0193a01_6": "師云。",
    "X85n1590_014:0193a01_7": "日出而作。",
    "X85n1590_014:0193a01_8": "日入而歇。",
    "X85n1590_014:0193a01_9": "進云。",
    "X85n1590_014:0193a01_10": "人境以蒙師指示。",
    "X85n1590_014:0193a02_11": "向上宗乘事如何。",
    "X85n1590_014:0193a02_12": "師便打。",
    "X85n1590_014:0193a02_13": "進云。",
    "X85n1590_014:0193a02_14": "瞎棒。",
    "X85n1590_014:0193a02_15": "師復打云。",
    "X85n1590_014:0193a03_16": "却有瞎漢喫在。",
    "X85n1590_014:0193a03_17": "乃云。",
    "X85n1590_014:0193a03_18": "時開飯店止飢寒。",
    "X85n1590_014:0193a03_19": "引水龍門且種田。",
    "X85n1590_014:0193a04_20": "佛法寧教齊爛却。",
    "X85n1590_014:0193a04_21": "從斯弗說老婆禪。",
    "X85n1590_014:0193a05_0": "蒼桐華禪師綦江封氏子。",
    "X85n1590_014:0193a05_1": "丱歲出家。",
    "X85n1590_014:0193a05_2": "廿年于密語和尚處圓具。",
    "X85n1590_014:0193a06_3": "石谷和尚印證。",
    "X85n1590_014:0193a06_4": "隱山為常。",
    "X85n1590_014:0193a06_5": "有山居詩行世。",
    "X85n1590_014:0193a07_0": "其略曰。",
    "X85n1590_014:0193a07_1": "山悠悠也水悠悠。",
    "X85n1590_014:0193a07_2": "一杖雲深任自遊。",
    "X85n1590_014:0193a07_3": "樹抄松花堪作食。",
    "X85n1590_014:0193a08_4": "秋迴荷葉可為裘。",
    "X85n1590_014:0193a08_5": "堂堂佛法消塵鏡。",
    "X85n1590_014:0193a08_6": "渺渺光陰送客舟。",
    "X85n1590_014:0193a09_7": "若要頓超如幻景。",
    "X85n1590_014:0193a09_8": "只須常牧此心牛。",
    "X85n1590_014:0193a09_9": "又云。",
    "X85n1590_014:0193a10_10": "溪山一一都成畵。",
    "X85n1590_014:0193a10_11": "竹樹叢叢畵不成。",
    "X85n1590_014:0193a10_12": "堪笑住山人性蠢。",
    "X85n1590_014:0193a11_13": "钁頭一柄足平生。",
    "X85n1590_014:0193a11_14": "暮年仍歸本郡石門寺。",
    "X85n1590_014:0193a11_15": "而臨行偈云。",
    "X85n1590_014:0193a12_16": "來時黃菊篩金。",
    "X85n1590_014:0193a12_17": "去時青山舖白。",
    "X85n1590_014:0193a12_18": "想起者個骷髏。",
    "X85n1590_014:0193a13_19": "千回萬回作客。",
    "X85n1590_014:0193a13_20": "今朝踢倒須彌。",
    "X85n1590_014:0193a13_21": "拶得虗空出血。",
    "X85n1590_014:0193a13_22": "涅槃城裏沒相知。",
    "X85n1590_014:0193a14_23": "笑殺率陀古彌勒。",
    "X85n1590_014:0193a15_0": "紫芝藏法嗣",
    "X85n1590_014:0193a16_0": "[郫-卑+((白-日+田)/廾)]筒護國寺天然貴禪師上堂。",
    "X85n1590_014:0193a16_1": "今朝腊月初八。",
    "X85n1590_014:0193a16_2": "處處闡揚佛法。",
    "X85n1590_014:0193a17_3": "惟有護國不然。",
    "X85n1590_014:0193a17_4": "見人只是生罵。",
    "X85n1590_014:0193a17_5": "驀拈拂子云。",
    "X85n1590_014:0193a18_6": "向者裡薦得。",
    "X85n1590_014:0193a18_7": "剎剎塵塵毗盧境界。",
    "X85n1590_014:0193a18_8": "溪聲鳥語觀音理門。",
    "X85n1590_014:0193a19_9": "其或未然。",
    "X85n1590_014:0193a19_10": "依舊鼻孔向下垂。",
    "X85n1590_014:0193a19_11": "擊拂子下座。",
    "X85n1590_014:0193a19_12": "元宵上堂。",
    "X85n1590_014:0193a20_13": "不唱陳年曲調。",
    "X85n1590_014:0193a20_14": "要打新鮮鼓笛。",
    "X85n1590_014:0193a20_15": "無言童子口吧吧。",
    "X85n1590_014:0193a21_16": "無舌人兒能解語。",
    "X85n1590_014:0193a21_17": "等閑操動沒絃琴。",
    "X85n1590_014:0193a21_18": "海水騰波山自起。",
    "X85n1590_014:0193a22_19": "且道沒絃琴作麼生操。",
    "X85n1590_014:0193a22_20": "以拄杖作操琴勢云。",
    "X85n1590_014:0193a22_21": "會麼。",
    "X85n1590_014:0193a23_22": "若將耳聽終難會。",
    "X85n1590_014:0193a23_23": "眼底聞聲方始知。",
    "X85n1590_014:0193a24_0": "錦官萬福寺瓊目溫禪師戎州宜賓鄧氏子。",
    "X85n1590_014:0193a24_1": "十五歲薙染。",
    "X85n1590_014:0193b01_2": "恒思此身無常。",
    "X85n1590_014:0193b01_3": "參謁諸方。",
    "X85n1590_014:0193b01_4": "聞紫芝和尚開堂。",
    "X85n1590_014:0193b01_5": "杖笠往參。",
    "X85n1590_014:0193b02_6": "充侍寮十五年。",
    "X85n1590_014:0193b02_7": "遂印可焉。",
    "X85n1590_014:0193b02_8": "後住萬福。",
    "X85n1590_014:0193b02_9": "上堂。",
    "X85n1590_014:0193b02_10": "昔人聚石說法。",
    "X85n1590_014:0193b03_11": "今我法說亦空。",
    "X85n1590_014:0193b03_12": "石火電光。",
    "X85n1590_014:0193b03_13": "難為湊泊。",
    "X85n1590_014:0193b03_14": "驀拈拄杖卓云。",
    "X85n1590_014:0193b04_15": "惟有者個。",
    "X85n1590_014:0193b04_16": "赤條條。",
    "X85n1590_014:0193b04_17": "光灼灼。",
    "X85n1590_014:0193b04_18": "有時和泥合水。",
    "X85n1590_014:0193b05_19": "社舞村歌。",
    "X85n1590_014:0193b05_20": "有時孤峰獨立。",
    "X85n1590_014:0193b05_21": "挂月懸星。",
    "X85n1590_014:0193b05_22": "動則俾觀音勢至結舌藏鋒。",
    "X85n1590_014:0193b06_23": "靜則令釋迦老子無本可據。",
    "X85n1590_014:0193b06_24": "且道利害在甚麼處。",
    "X85n1590_014:0193b07_25": "良久云。",
    "X85n1590_014:0193b07_26": "參。",
    "X85n1590_014:0193b07_27": "護國寺為天然和尚點主。",
    "X85n1590_014:0193b07_28": "眾請上堂。",
    "X85n1590_014:0193b08_29": "者曲彔木床。",
    "X85n1590_014:0193b08_30": "是我天然法兄。",
    "X85n1590_014:0193b08_31": "揑不聚。",
    "X85n1590_014:0193b08_32": "擘不開的。",
    "X85n1590_014:0193b09_33": "今朝落在萬福手裏。",
    "X85n1590_014:0193b09_34": "于中七縱八橫。",
    "X85n1590_014:0193b09_35": "齊行照用。",
    "X85n1590_014:0193b09_36": "乃豎拂子召眾云。",
    "X85n1590_014:0193b10_37": "見麼。",
    "X85n1590_014:0193b10_38": "茲我然兄。",
    "X85n1590_014:0193b10_39": "于一毫端。",
    "X85n1590_014:0193b10_40": "現大人相。",
    "X85n1590_014:0193b11_0": "與汝諸人。",
    "X85n1590_014:0193b11_1": "道末後句去也。",
    "X85n1590_014:0193b11_2": "復擊禪床云。",
    "X85n1590_014:0193b11_3": "聞麼。",
    "X85n1590_014:0193b11_4": "復為汝等全身獨露。",
    "X85n1590_014:0193b12_5": "若或不薦。",
    "X85n1590_014:0193b12_6": "萬福不免別通消息。",
    "X85n1590_014:0193b12_7": "拋下拂子云。",
    "X85n1590_014:0193b13_8": "記取者枚毛拂子。",
    "X85n1590_014:0193b13_9": "再來號吼震三千。",
    "X85n1590_014:0193b14_0": "語嵩裔法嗣",
    "X85n1590_014:0193b15_0": "嵩耳住禪師渝州費氏子。",
    "X85n1590_014:0193b15_1": "初參破雪和尚。",
    "X85n1590_014:0193b15_2": "目不識丁。",
    "X85n1590_014:0193b16_0": "鍊杜多行。",
    "X85n1590_014:0193b16_1": "後訪牟尼山語嵩和尚。",
    "X85n1590_014:0193b16_2": "棒下見旨。",
    "X85n1590_014:0193b16_3": "乃印可焉。",
    "X85n1590_014:0193b17_4": "後住少峩山慈明寺。",
    "X85n1590_014:0193b17_5": "上堂。",
    "X85n1590_014:0193b17_6": "弘機獨唱。",
    "X85n1590_014:0193b17_7": "千聖潛踪。",
    "X85n1590_014:0193b17_8": "截斷眾流。",
    "X85n1590_014:0193b18_9": "棒雲無路。",
    "X85n1590_014:0193b18_10": "若箇正因衲子。",
    "X85n1590_014:0193b18_11": "顯大機施大用。",
    "X85n1590_014:0193b18_12": "于石火閃電光中啐啄。",
    "X85n1590_014:0193b19_13": "縱奪人天。",
    "X85n1590_014:0193b19_14": "權衡佛祖。",
    "X85n1590_014:0193b19_15": "敲唱雙行。",
    "X85n1590_014:0193b20_0": "殺活齊彰。",
    "X85n1590_014:0193b20_1": "碎凡聖窠窟。",
    "X85n1590_014:0193b20_2": "斷生死根苗。",
    "X85n1590_014:0193b20_3": "猶未是向上事在。",
    "X85n1590_014:0193b21_4": "作麼生是向上事。",
    "X85n1590_014:0193b21_5": "王令已行天下徧。",
    "X85n1590_014:0193b21_6": "將軍塞外絕烟塵。",
    "X85n1590_014:0193b23_0": "書雲旵法嗣",
    "X85n1590_014:0193b24_0": "舌響訥禪師定遠龍氏子。",
    "X85n1590_014:0193b24_1": "參半天下。",
    "X85n1590_014:0193b24_2": "于林野和尚掌下有省。",
    "X85n1590_014:0193c01_3": "回蜀見書雲和尚。",
    "X85n1590_014:0193c01_4": "以印證焉。",
    "X85n1590_014:0193c01_5": "上堂。",
    "X85n1590_014:0193c01_6": "向上一句。",
    "X85n1590_014:0193c02_0": "千聖結舌。",
    "X85n1590_014:0193c02_1": "覿面一著。",
    "X85n1590_014:0193c02_2": "隨處現成。",
    "X85n1590_014:0193c02_3": "折旋俯仰。",
    "X85n1590_014:0193c02_4": "露布本地風光。",
    "X85n1590_014:0193c03_5": "咳唾掉臂。",
    "X85n1590_014:0193c03_6": "全彰衲僧機柄。",
    "X85n1590_014:0193c03_7": "上根利智。",
    "X85n1590_014:0193c03_8": "如良驥見鞭影追風千里。",
    "X85n1590_014:0193c04_9": "中下之流。",
    "X85n1590_014:0193c04_10": "似韓獹逐塊永忘其返。",
    "X85n1590_014:0193c04_11": "而今勿論上中下根。",
    "X85n1590_014:0193c05_12": "直教箇箇氣宇如王。",
    "X85n1590_014:0193c05_13": "坐斷千差路頭。",
    "X85n1590_014:0193c06_14": "把定衲僧巴鼻。",
    "X85n1590_014:0193c06_15": "洞明頂[寧*頁]正眼。",
    "X85n1590_014:0193c06_16": "覰破祖師關捩。",
    "X85n1590_014:0193c06_17": "且道如何是祖師關捩。",
    "X85n1590_014:0193c07_18": "四野嚴寒無處泊。",
    "X85n1590_014:0193c07_19": "散髮披襟到畵堂。",
    "X85n1590_014:0193c08_20": "上堂。",
    "X85n1590_014:0193c08_21": "打開光明藏。",
    "X85n1590_014:0193c08_22": "現出本常理。",
    "X85n1590_014:0193c08_23": "大地絕點翳。",
    "X85n1590_014:0193c08_24": "四海清如洗。",
    "X85n1590_014:0193c09_25": "森羅與萬象。",
    "X85n1590_014:0193c09_26": "都盧在裏許。",
    "X85n1590_014:0193c09_27": "休言覩明星。",
    "X85n1590_014:0193c09_28": "誑惑癡男女。",
    "X85n1590_014:0193c10_29": "上堂。",
    "X85n1590_014:0193c10_30": "爐鞴弘開。",
    "X85n1590_014:0193c10_31": "魔佛頓鎔。",
    "X85n1590_014:0193c10_32": "鉗錘高舉。",
    "X85n1590_014:0193c10_33": "聖凡情盡。",
    "X85n1590_014:0193c11_34": "箇箇焦頭爛額。",
    "X85n1590_014:0193c11_35": "人人皮綻肉鎔。",
    "X85n1590_014:0193c11_36": "任是百煉精金。",
    "X85n1590_014:0193c12_0": "到此也須失色。",
    "X85n1590_014:0193c12_1": "卓拄杖云。",
    "X85n1590_014:0193c12_2": "拈出紅爐金彈子。",
    "X85n1590_014:0193c12_3": "簉破諸人銕面門。",
    "X85n1590_014:0193c14_0": "麗眉釆禪師瀘陽人。",
    "X85n1590_014:0193c14_1": "得法于書雲旵和尚。",
    "X85n1590_014:0193c14_2": "住金川之中嵓。",
    "X85n1590_014:0193c15_3": "開爐上堂。",
    "X85n1590_014:0193c15_4": "個事人人本具。",
    "X85n1590_014:0193c15_5": "何須向外討覓。",
    "X85n1590_014:0193c15_6": "頭頭頂著青天。",
    "X85n1590_014:0193c16_7": "步步踏著實地。",
    "X85n1590_014:0193c16_8": "山僧不是妄言。",
    "X85n1590_014:0193c16_9": "要且理無二致。",
    "X85n1590_014:0193c17_10": "所以龐居士云。",
    "X85n1590_014:0193c17_11": "神通並妙用。",
    "X85n1590_014:0193c17_12": "運水及搬柴。",
    "X85n1590_014:0193c17_13": "若于此中透徹。",
    "X85n1590_014:0193c18_14": "一生參學事畢。",
    "X85n1590_014:0193c18_15": "其或未然。",
    "X85n1590_014:0193c18_16": "長連床上豎起脊梁。",
    "X85n1590_014:0193c19_17": "切莫瞌睡。",
    "X85n1590_014:0193c19_18": "抖擻精神。",
    "X85n1590_014:0193c19_19": "只看穿衣喫飯。",
    "X85n1590_014:0193c19_20": "運水搬柴底。",
    "X85n1590_014:0193c20_21": "畢竟是個甚麼。",
    "X85n1590_014:0193c20_22": "參。",
    "X85n1590_014:0193c20_23": "佛成道上堂。",
    "X85n1590_014:0193c20_24": "居來十載為叢林。",
    "X85n1590_014:0193c21_0": "幸爾今朝佛道成。",
    "X85n1590_014:0193c21_1": "溪山雲月渾閒事。",
    "X85n1590_014:0193c21_2": "只取金鱗上直繩。",
    "X85n1590_014:0193c22_3": "先師涅槃後。",
    "X85n1590_014:0193c22_4": "凄然感興廢。",
    "X85n1590_014:0193c22_5": "不肖揚家醜。",
    "X85n1590_014:0193c22_6": "扶起破沙盆。",
    "X85n1590_014:0193c23_7": "修殘補破屋。",
    "X85n1590_014:0193c23_8": "先要得其人。",
    "X85n1590_014:0193c23_9": "啐啄同時節。",
    "X85n1590_014:0193c23_10": "三生似有因。",
    "X85n1590_014:0193c24_11": "今欲傳家具。",
    "X85n1590_014:0193c24_12": "人天共證盟。",
    "X85n1590_014:0193c24_13": "放出三支箭。",
    "X85n1590_014:0193c24_14": "相將射一羣。",
    "X85n1590_014:0194a01_15": "遂召滔然用初朗旭三人過來云。",
    "X85n1590_014:0194a01_16": "從上機關。",
    "X85n1590_014:0194a01_17": "千聖同廛。",
    "X85n1590_014:0194a02_18": "一道圓光。",
    "X85n1590_014:0194a02_19": "萬靈合轍。",
    "X85n1590_014:0194a02_20": "驀喝一喝云。",
    "X85n1590_014:0194a02_21": "且道者個還入其數麼。",
    "X85n1590_014:0194a03_22": "一輪皓月懸崖畔。",
    "X85n1590_014:0194a03_23": "幾片殘雲挂嶺頭。",
    "X85n1590_014:0194a03_24": "卓一卓下座。",
    "X85n1590_014:0194a05_0": "大冶法嗣",
    "X85n1590_014:0194a06_0": "舒光照禪師蘄水人。",
    "X85n1590_014:0194a06_1": "避世入蛾眉絕頂。",
    "X85n1590_014:0194a06_2": "影不下山者二十餘載。",
    "X85n1590_014:0194a07_3": "忽一日欲下山。",
    "X85n1590_014:0194a07_4": "鳴鼓上堂。",
    "X85n1590_014:0194a07_5": "九旬限滿。",
    "X85n1590_014:0194a07_6": "巧中藏拙。",
    "X85n1590_014:0194a08_7": "晝夜殷勤。",
    "X85n1590_014:0194a08_8": "拙中藏巧。",
    "X85n1590_014:0194a08_9": "養馴一個水牯牛。",
    "X85n1590_014:0194a08_10": "頭角崢嶸世上少。",
    "X85n1590_014:0194a09_11": "今朝肆足印莓苔。",
    "X85n1590_014:0194a09_12": "笑殺平田黃大老。",
    "X85n1590_014:0194a09_13": "辭世形本無形。",
    "X85n1590_014:0194a10_14": "說亦無說。",
    "X85n1590_014:0194a10_15": "盡大地人難摸索七十九年住娑婆。",
    "X85n1590_014:0194a11_16": "彈指光陰如夢覺。",
    "X85n1590_014:0194a11_17": "舉步踢倒蛾眉山。",
    "X85n1590_014:0194a11_18": "者邊那畔總一箇。",
    "X85n1590_014:0194a12_19": "喝一喝。",
    "X85n1590_014:0194a12_20": "擲筆而逝。",
    "X85n1590_014:0194a13_0": "耳毒泰法嗣",
    "X85n1590_014:0194a14_0": "射洪會靈寺幻住明禪師瀘州曾氏子。",
    "X85n1590_014:0194a14_1": "嗣法于耳毒泰。",
    "X85n1590_014:0194a15_2": "上堂。",
    "X85n1590_014:0194a15_3": "雨過莓苔淨。",
    "X85n1590_014:0194a15_4": "陞堂說法時。",
    "X85n1590_014:0194a15_5": "斯緣誰解會。",
    "X85n1590_014:0194a15_6": "啼鳥上花枝。",
    "X85n1590_014:0194a16_7": "小參。",
    "X85n1590_014:0194a16_8": "初撾塗毒鼓。",
    "X85n1590_014:0194a16_9": "三舉撲地鐘。",
    "X85n1590_014:0194a16_10": "敵勝超羣句。",
    "X85n1590_014:0194a17_0": "生蛇始化龍。",
    "X85n1590_014:0194a17_1": "咄。",
    "X85n1590_014:0194a18_0": "純備德禪師鄷都李氏子。",
    "X85n1590_014:0194a18_1": "中年于幻住大師處鬀染。",
    "X85n1590_014:0194a19_0": "詣耳毒和尚座下圓具。",
    "X85n1590_014:0194a19_1": "而嗣法焉。",
    "X85n1590_014:0194a19_2": "後住彝陵州黃陵禪院。",
    "X85n1590_014:0194a20_3": "上堂。",
    "X85n1590_014:0194a20_4": "立教明宗。",
    "X85n1590_014:0194a20_5": "須張縵天網子。",
    "X85n1590_014:0194a20_6": "活捉龍蛇。",
    "X85n1590_014:0194a20_7": "可以直下承當。",
    "X85n1590_014:0194a21_8": "安邦定國。",
    "X85n1590_014:0194a21_9": "要展揭世經綸。",
    "X85n1590_014:0194a21_10": "生擒虎兕。",
    "X85n1590_014:0194a21_11": "乃能全身擔荷。",
    "X85n1590_014:0194a22_12": "所以祖師心印。",
    "X85n1590_014:0194a22_13": "壯似銕牛之機。",
    "X85n1590_014:0194a22_14": "去即印住。",
    "X85n1590_014:0194a23_0": "住即印破。",
    "X85n1590_014:0194a23_1": "只如不去不住。",
    "X85n1590_014:0194a23_2": "印即是。",
    "X85n1590_014:0194a23_3": "不印即是。",
    "X85n1590_014:0194a23_4": "于斯擬議。",
    "X85n1590_014:0194a24_5": "錯過千山。",
    "X85n1590_014:0194a24_6": "少涉思惟。",
    "X85n1590_014:0194a24_7": "白雲萬里。",
    "X85n1590_014:0194a24_8": "致使三世諸佛總放不下。",
    "X85n1590_014:0194b01_9": "歷代祖師全提不起。",
    "X85n1590_014:0194b01_10": "一大藏教詮註不及。",
    "X85n1590_014:0194b01_11": "刢俐衲僧自救不了。",
    "X85n1590_014:0194b02_12": "正恁麼時。",
    "X85n1590_014:0194b02_13": "作麼生履踐。",
    "X85n1590_014:0194b02_14": "喝一喝云。",
    "X85n1590_014:0194b03_0": "振奮吒沙無向背。",
    "X85n1590_014:0194b03_1": "爍迦羅眼莫能窺。",
    "X85n1590_014:0194b04_0": "佛語御法嗣",
    "X85n1590_014:0194b05_0": "重慶府香國寺寱堂秀禪師湖廣辰州府人。",
    "X85n1590_014:0194b05_1": "幼失恃怙。",
    "X85n1590_014:0194b06_2": "依湖山慧覺和尚之嗣。",
    "X85n1590_014:0194b06_3": "佛語會下薙染。",
    "X85n1590_014:0194b06_4": "十八圓具。",
    "X85n1590_014:0194b07_0": "深研內外典集。",
    "X85n1590_014:0194b07_1": "未幾屏去。",
    "X85n1590_014:0194b07_2": "鐵脊焦團。",
    "X85n1590_014:0194b07_3": "受佛語記莂。",
    "X85n1590_014:0194b07_4": "囑之南遊。",
    "X85n1590_014:0194b08_5": "參徧諸方。",
    "X85n1590_014:0194b08_6": "己巳歸渝就香國。",
    "X85n1590_014:0194b08_7": "開爐上堂。",
    "X85n1590_014:0194b08_8": "爐火乍燔。",
    "X85n1590_014:0194b09_9": "是銕是銅須經煆。",
    "X85n1590_014:0194b09_10": "槖籥大煽。",
    "X85n1590_014:0194b09_11": "若凡若聖盡銷鎔。",
    "X85n1590_014:0194b10_0": "淬般若之智鋒。",
    "X85n1590_014:0194b10_1": "礪金剛之神劍。",
    "X85n1590_014:0194b10_2": "若是躍冶之金。",
    "X85n1590_014:0194b10_3": "徒勞鍛煉。",
    "X85n1590_014:0194b11_4": "驀竪拂云。",
    "X85n1590_014:0194b11_5": "者一星兒火種。",
    "X85n1590_014:0194b11_6": "自鷲峰發燄。",
    "X85n1590_014:0194b11_7": "嵩少騰芳。",
    "X85n1590_014:0194b12_8": "太白山中。",
    "X85n1590_014:0194b12_9": "標霞天之光彩。",
    "X85n1590_014:0194b12_10": "錦江江上。",
    "X85n1590_014:0194b12_11": "闡亙古之宗猷。",
    "X85n1590_014:0194b13_12": "如如意珠。",
    "X85n1590_014:0194b13_13": "似帝青寶。",
    "X85n1590_014:0194b13_14": "可以福國&#;民。",
    "X85n1590_014:0194b13_15": "為祥為瑞。",
    "X85n1590_014:0194b13_16": "入聖超凡。",
    "X85n1590_014:0194b14_17": "而今落在香國者裏。",
    "X85n1590_014:0194b14_18": "只得借曼殊普賢作爐頭。",
    "X85n1590_014:0194b15_19": "勢至圓通為冶匠。",
    "X85n1590_014:0194b15_20": "五百聲聞緣覺作散工。",
    "X85n1590_014:0194b15_21": "扇火扇風。",
    "X85n1590_014:0194b16_22": "添煤添炭。",
    "X85n1590_014:0194b16_23": "山僧忍俊不禁。",
    "X85n1590_014:0194b16_24": "未免助其神用。",
    "X85n1590_014:0194b16_25": "遂擲拂子云。",
    "X85n1590_014:0194b17_26": "直下來也。",
    "X85n1590_014:0194b17_27": "急著眼覰。",
    "X85n1590_014:0194b18_0": "吼一等法嗣",
    "X85n1590_014:0194b19_0": "唐安曇雲寺文璧福禪師眉州陳氏子。",
    "X85n1590_014:0194b19_1": "幼冲覃訐。",
    "X85n1590_014:0194b19_2": "染指釋門。",
    "X85n1590_014:0194b20_3": "參徧諸方。",
    "X85n1590_014:0194b20_4": "後入吼和尚之室。",
    "X85n1590_014:0194b20_5": "秉拂上堂。",
    "X85n1590_014:0194b20_6": "柳舒金。",
    "X85n1590_014:0194b21_7": "梅正白。",
    "X85n1590_014:0194b21_8": "幾經霜凌幾經雪。",
    "X85n1590_014:0194b21_9": "寒枝傲骨占春先。",
    "X85n1590_014:0194b21_10": "却把清香輕漏泄。",
    "X85n1590_014:0194b22_11": "惟佛與佛無分別。",
    "X85n1590_014:0194b22_12": "揮拂子云。",
    "X85n1590_014:0194b22_13": "筍過東家作竹林。",
    "X85n1590_014:0194b23_14": "藕穿池面為荷葉。",
    "X85n1590_014:0194b23_15": "臘八上堂。",
    "X85n1590_014:0194b23_16": "積劫深懷疑彈子。",
    "X85n1590_014:0194b24_17": "實難吞吐出皇宮。",
    "X85n1590_014:0194b24_18": "六年雪嶺時無懈。",
    "X85n1590_014:0194b24_19": "驀地擡眸見己躳。",
    "X85n1590_014:0194c01_20": "此是大覺老人。",
    "X85n1590_014:0194c01_21": "在霜天月下悟得底。",
    "X85n1590_014:0194c01_22": "今日福上座。",
    "X85n1590_014:0194c02_23": "向情與無情煥然等現處。",
    "X85n1590_014:0194c02_24": "舉似大眾。",
    "X85n1590_014:0194c02_25": "還會麼。",
    "X85n1590_014:0194c02_26": "若會得。",
    "X85n1590_014:0194c03_27": "天地虗空生汝心內。",
    "X85n1590_014:0194c03_28": "人物殿堂皆汝元常。",
    "X85n1590_014:0194c03_29": "若或未然。",
    "X85n1590_014:0194c04_30": "捨家出家本屬何因。",
    "X85n1590_014:0194c04_31": "緇衣披度當為何事。",
    "X85n1590_014:0194c04_32": "正恁麼時。",
    "X85n1590_014:0194c05_33": "且道大覺老人。",
    "X85n1590_014:0194c05_34": "畢竟悟箇甚麼。",
    "X85n1590_014:0194c05_35": "良久云。",
    "X85n1590_014:0194c05_36": "泥牛掣斷黃金鎖。",
    "X85n1590_014:0194c06_37": "銕馬衝開碧玉關。",
    "X85n1590_014:0194c06_38": "改見月菴為曇雲寺。",
    "X85n1590_014:0194c06_39": "上堂。",
    "X85n1590_014:0194c07_0": "一點一畫涅槃妙心。",
    "X85n1590_014:0194c07_1": "一字一言真實勝義。",
    "X85n1590_014:0194c07_2": "不是九重隆下。",
    "X85n1590_014:0194c08_3": "親從刺史頒來。",
    "X85n1590_014:0194c08_4": "顯示佛祖真機。",
    "X85n1590_014:0194c08_5": "開發人天眼目。",
    "X85n1590_014:0194c09_0": "所以道。",
    "X85n1590_014:0194c09_1": "若以眼見。",
    "X85n1590_014:0194c09_2": "乃文殊境界。",
    "X85n1590_014:0194c09_3": "若以耳聞。",
    "X85n1590_014:0194c09_4": "實觀音妙體。",
    "X85n1590_014:0194c10_5": "若以心思。",
    "X85n1590_014:0194c10_6": "普賢牀榻。",
    "X85n1590_014:0194c10_7": "且道。",
    "X85n1590_014:0194c10_8": "毗盧遮那即今在甚麼處。",
    "X85n1590_014:0194c11_9": "顧左右云。",
    "X85n1590_014:0194c11_10": "不擬議時全體現。",
    "X85n1590_014:0194c11_11": "涉思惟處隔關山。",
    "X85n1590_014:0194c12_0": "瑞林蓮法嗣",
    "X85n1590_014:0194c13_0": "玉諾昌禪師蜀南人。",
    "X85n1590_014:0194c13_1": "齠齡于瑞林和尚處薙染。",
    "X85n1590_014:0194c13_2": "至年圓具。",
    "X85n1590_014:0194c14_3": "初遊講肆。",
    "X85n1590_014:0194c14_4": "頗通經論。",
    "X85n1590_014:0194c14_5": "因看圓覺經。",
    "X85n1590_014:0194c14_6": "四大各離。",
    "X85n1590_014:0194c14_7": "始覺忙然。",
    "X85n1590_014:0194c15_8": "遂徧參。",
    "X85n1590_014:0194c15_9": "歸來徹困于淡竹老人。",
    "X85n1590_014:0194c15_10": "受記莂于本師瑞林和尚。",
    "X85n1590_014:0194c16_11": "康熙戊午。",
    "X85n1590_014:0194c16_12": "住成都府德元寺。",
    "X85n1590_014:0194c16_13": "上堂。",
    "X85n1590_014:0194c16_14": "吾年三十四。",
    "X85n1590_014:0194c17_15": "佛法總不識。",
    "X85n1590_014:0194c17_16": "張登曲彔牀。",
    "X85n1590_014:0194c17_17": "渾無些子伎。",
    "X85n1590_014:0194c17_18": "全提臨濟宗。",
    "X85n1590_014:0194c18_19": "惟憑斯箇力。",
    "X85n1590_014:0194c18_20": "頭頭絕覆藏。",
    "X85n1590_014:0194c18_21": "處處無踪跡。",
    "X85n1590_014:0194c18_22": "活潑潑耀古騰今。",
    "X85n1590_014:0194c19_23": "峭巍巍輝天鑑地。",
    "X85n1590_014:0194c19_24": "當陽露出端倪。",
    "X85n1590_014:0194c19_25": "揚眉已落第二。",
    "X85n1590_014:0194c20_26": "且如何是全提意旨。",
    "X85n1590_014:0194c20_27": "卓拄杖云。",
    "X85n1590_014:0194c20_28": "青天也皺眉。",
    "X85n1590_014:0194c21_29": "住南關外草堂寺。",
    "X85n1590_014:0194c21_30": "上堂。",
    "X85n1590_014:0194c21_31": "兩度相催住草堂。",
    "X85n1590_014:0194c21_32": "且無佛法可商量。",
    "X85n1590_014:0194c22_33": "烏藤拈出全收放。",
    "X85n1590_014:0194c22_34": "殺活臨機覿體彰。",
    "X85n1590_014:0194c22_35": "呈拄杖召眾云。",
    "X85n1590_014:0194c23_36": "者木上座。",
    "X85n1590_014:0194c23_37": "在臨濟德山。",
    "X85n1590_014:0194c23_38": "有意氣時添意氣。",
    "X85n1590_014:0194c24_0": "在文殊普賢。",
    "X85n1590_014:0194c24_1": "不風流處也風流。",
    "X85n1590_014:0194c24_2": "落在昌上座手裏。",
    "X85n1590_014:0194c24_3": "放行則萬象生輝。",
    "X85n1590_014:0195a01_4": "把住則乾坤失色。",
    "X85n1590_014:0195a01_5": "空王殿上。",
    "X85n1590_014:0195a01_6": "一任簸土揚塵。",
    "X85n1590_014:0195a02_7": "糞掃堆頭。",
    "X85n1590_014:0195a02_8": "徧現紫金光聚。",
    "X85n1590_014:0195a02_9": "有時為天中之天。",
    "X85n1590_014:0195a03_0": "有時作聖中之聖。",
    "X85n1590_014:0195a03_1": "胎卵濕化。",
    "X85n1590_014:0195a03_2": "鱗甲羽毛。",
    "X85n1590_014:0195a03_3": "承斯恩力。",
    "X85n1590_014:0195a03_4": "齊彰本地風光。",
    "X85n1590_014:0195a04_5": "各顯神通妙用。",
    "X85n1590_014:0195a04_6": "與凡聖同源。",
    "X85n1590_014:0195a04_7": "千差一致。",
    "X85n1590_014:0195a05_0": "復卓一卓云。",
    "X85n1590_014:0195a05_1": "還委悉麼。",
    "X85n1590_014:0195a05_2": "離相離名人不稟。",
    "X85n1590_014:0195a05_3": "吹毛用了急須磨。",
    "X85n1590_014:0195a07_0": "曉元濟法嗣",
    "X85n1590_014:0195a08_0": "大旭宗禪師蜀南建昌李氏子。",
    "X85n1590_014:0195a08_1": "齠年祝髮。",
    "X85n1590_014:0195a08_2": "詣成都草堂寺。",
    "X85n1590_014:0195a09_3": "參曉元和尚座下圓具。",
    "X85n1590_014:0195a09_4": "巾缾六稔。",
    "X85n1590_014:0195a09_5": "元痛以鉗錘。",
    "X85n1590_014:0195a10_0": "契機之後。",
    "X85n1590_014:0195a10_1": "住窰山鎮疆寺。",
    "X85n1590_014:0195a10_2": "至節上堂。",
    "X85n1590_014:0195a10_3": "心珠燦燦絕纖塵。",
    "X85n1590_014:0195a11_4": "盡淨常靈脫體新。",
    "X85n1590_014:0195a11_5": "無物與伊堪比并。",
    "X85n1590_014:0195a11_6": "略侔日月合其明。",
    "X85n1590_014:0195a12_7": "眾中有恁麼人麼。",
    "X85n1590_014:0195a12_8": "問月朗當空時如何。",
    "X85n1590_014:0195a12_9": "師云。",
    "X85n1590_014:0195a12_10": "光映前街連後巷。",
    "X85n1590_014:0195a13_11": "進云。",
    "X85n1590_014:0195a13_12": "月落後如何。",
    "X85n1590_014:0195a13_13": "師云。",
    "X85n1590_014:0195a13_14": "剔起殘燈閱簡編。",
    "X85n1590_014:0195a14_15": "進云。",
    "X85n1590_014:0195a14_16": "如何是窰山境。",
    "X85n1590_014:0195a14_17": "師云。",
    "X85n1590_014:0195a14_18": "雨晴松竹翠。",
    "X85n1590_014:0195a14_19": "山寺木魚聲。",
    "X85n1590_014:0195a15_20": "進云。",
    "X85n1590_014:0195a15_21": "如何是境中人。",
    "X85n1590_014:0195a15_22": "師云。",
    "X85n1590_014:0195a15_23": "樓頭歌舞後。",
    "X85n1590_014:0195a15_24": "猶味樂賓儔。",
    "X85n1590_014:0195a16_25": "進云。",
    "X85n1590_014:0195a16_26": "人境雙忘旹如何。",
    "X85n1590_014:0195a16_27": "師云。",
    "X85n1590_014:0195a16_28": "籬邊葉落無聲響。",
    "X85n1590_014:0195a17_0": "嶺上雲歸絕點痕。",
    "X85n1590_014:0195a17_1": "乃云。",
    "X85n1590_014:0195a17_2": "六花亂墜。",
    "X85n1590_014:0195a17_3": "寒氣逼人。",
    "X85n1590_014:0195a17_4": "日南長至。",
    "X85n1590_014:0195a18_5": "百卉萌生。",
    "X85n1590_014:0195a18_6": "山僧褁頭大睡。",
    "X85n1590_014:0195a18_7": "誰管他人屋上霜凝。",
    "X85n1590_014:0195a18_8": "以拄杖作圓相云。",
    "X85n1590_014:0195a19_9": "會麼。",
    "X85n1590_014:0195a19_10": "于中薦得。",
    "X85n1590_014:0195a19_11": "百千三昧一時證得。",
    "X85n1590_014:0195a20_0": "神通妙用無越此宗。",
    "X85n1590_014:0195a20_1": "人人向文殊眉睫上往來。",
    "X85n1590_014:0195a20_2": "個個于普賢行門中出入。",
    "X85n1590_014:0195a21_3": "高揖釋迦。",
    "X85n1590_014:0195a21_4": "不拜彌勒。",
    "X85n1590_014:0195a21_5": "到恁麼田地。",
    "X85n1590_014:0195a22_6": "有無不立。",
    "X85n1590_014:0195a22_7": "凡聖亦如。",
    "X85n1590_014:0195a22_8": "隨緣放曠。",
    "X85n1590_014:0195a22_9": "任運逍遙。",
    "X85n1590_014:0195a22_10": "石頭土塊動地放光。",
    "X85n1590_014:0195a23_11": "蒼松翠竹吾人本體。",
    "X85n1590_014:0195a23_12": "何必要山僧重叨呾也。",
    "X85n1590_014:0195a24_13": "如或未委。",
    "X85n1590_014:0195a24_14": "不惜唇皮再下註脚。",
    "X85n1590_014:0195a24_15": "驀拈拄杖卓云。",
    "X85n1590_014:0195b01_0": "久立。",
    "X85n1590_014:0195b02_0": "佛冤綱法嗣",
    "X85n1590_014:0195b03_0": "嘉州九頂子開乾禪師本州辜氏子。",
    "X85n1590_014:0195b03_1": "生而有異。",
    "X85n1590_014:0195b03_2": "孤勁淵冲。",
    "X85n1590_014:0195b04_3": "志慕上乘。",
    "X85n1590_014:0195b04_4": "年十九。",
    "X85n1590_014:0195b04_5": "往洪椿坪。",
    "X85n1590_014:0195b04_6": "禮祖正師削染。",
    "X85n1590_014:0195b04_7": "後遊成都昭覺。",
    "X85n1590_014:0195b05_8": "依師翁操策機辯。",
    "X85n1590_014:0195b05_9": "日究奧旨。",
    "X85n1590_014:0195b05_10": "圓具禮辭。",
    "X85n1590_014:0195b06_0": "歷謁尊宿。",
    "X85n1590_014:0195b06_1": "提撕心要。",
    "X85n1590_014:0195b06_2": "洞然無滯。",
    "X85n1590_014:0195b06_3": "時師翁謝事。",
    "X85n1590_014:0195b06_4": "冤領昭覺。",
    "X85n1590_014:0195b07_5": "復造其席。",
    "X85n1590_014:0195b07_6": "覺垂語云。",
    "X85n1590_014:0195b07_7": "牛過窻櫺。",
    "X85n1590_014:0195b07_8": "頭角四蹄俱過。",
    "X85n1590_014:0195b07_9": "因甚尾巴過不得。",
    "X85n1590_014:0195b08_10": "師應聲云。",
    "X85n1590_014:0195b08_11": "明破即不堪。",
    "X85n1590_014:0195b08_12": "拂袖便出。",
    "X85n1590_014:0195b08_13": "即頌。",
    "X85n1590_014:0195b09_14": "渾身獨步千峰外。",
    "X85n1590_014:0195b09_15": "無限風光意莫窮。",
    "X85n1590_014:0195b09_16": "揭石耕雲橫宇宙。",
    "X85n1590_014:0195b10_17": "尾巴尖上活渠儂。",
    "X85n1590_014:0195b10_18": "覺又問。",
    "X85n1590_014:0195b10_19": "萬法歸一。",
    "X85n1590_014:0195b10_20": "一歸何處。",
    "X85n1590_014:0195b11_0": "師云。",
    "X85n1590_014:0195b11_1": "誰家店內無宿客。",
    "X85n1590_014:0195b11_2": "覺云。",
    "X85n1590_014:0195b11_3": "未在更道。",
    "X85n1590_014:0195b11_4": "師立頌。",
    "X85n1590_014:0195b11_5": "一法凜然萬法虗。",
    "X85n1590_014:0195b12_6": "山河大地一芙蕖。",
    "X85n1590_014:0195b12_7": "電光石火猶嫌鈍。",
    "X85n1590_014:0195b12_8": "妙體堂堂位不居。",
    "X85n1590_014:0195b13_9": "覺徵云。",
    "X85n1590_014:0195b13_10": "不是心不是佛不是物。",
    "X85n1590_014:0195b13_11": "是個甚麼。",
    "X85n1590_014:0195b14_12": "師云。",
    "X85n1590_014:0195b14_13": "不敢妄生穿鑿。",
    "X85n1590_014:0195b14_14": "連頌二偈。",
    "X85n1590_014:0195b14_15": "心佛俱非不是物。",
    "X85n1590_014:0195b15_16": "神頭鬼面絕誵訛。",
    "X85n1590_014:0195b15_17": "等閑放出遼天鶻。",
    "X85n1590_014:0195b15_18": "舒掌擎拳較不多。",
    "X85n1590_014:0195b16_19": "又相逢不識名和姓。",
    "X85n1590_014:0195b16_20": "伊向東西我自南。",
    "X85n1590_014:0195b16_21": "莫道長安風月好。",
    "X85n1590_014:0195b17_22": "到頭終是自羞慚。",
    "X85n1590_014:0195b17_23": "覺可之。",
    "X85n1590_014:0195b17_24": "其徵徹直捷。",
    "X85n1590_014:0195b17_25": "逈絕見知。",
    "X85n1590_014:0195b18_26": "扣問咨參。",
    "X85n1590_014:0195b18_27": "了無惰念。",
    "X85n1590_014:0195b18_28": "覺解制。",
    "X85n1590_014:0195b18_29": "授以衣拂。",
    "X85n1590_014:0195b18_30": "癸酉十月。",
    "X85n1590_014:0195b19_31": "師翁丈老人結制。",
    "X85n1590_014:0195b19_32": "命秉拂上堂。",
    "X85n1590_014:0195b19_33": "若論個事。",
    "X85n1590_014:0195b19_34": "一味尋常。",
    "X85n1590_014:0195b20_35": "騎聲葢色。",
    "X85n1590_014:0195b20_36": "法法全彰。",
    "X85n1590_014:0195b20_37": "縱奪殺活。",
    "X85n1590_014:0195b20_38": "不犯鋒鋩。",
    "X85n1590_014:0195b20_39": "清風明月。",
    "X85n1590_014:0195b21_40": "不坐玉堂。",
    "X85n1590_014:0195b21_41": "快須擉瞎娘生眼。",
    "X85n1590_014:0195b21_42": "炯炯寒光照大唐。",
    "X85n1590_014:0195b22_0": "靈利衲僧聊聞舉著。",
    "X85n1590_014:0195b22_1": "直下承當。",
    "X85n1590_014:0195b22_2": "雖然如是。",
    "X85n1590_014:0195b22_3": "脚跟下與伊三十拄杖。",
    "X85n1590_014:0195b23_4": "且道。",
    "X85n1590_014:0195b23_5": "利害在甚處。",
    "X85n1590_014:0195b23_6": "卓拄杖云。",
    "X85n1590_014:0195b23_7": "鴛鴦綉出從君看。",
    "X85n1590_014:0195b24_8": "不把金針度與人。",
    "X85n1590_014:0195c01_0": "天湛熾禪師漢之古洋州李氏子。",
    "X85n1590_014:0195c01_1": "夙植逈別。",
    "X85n1590_014:0195c01_2": "不類常童。",
    "X85n1590_014:0195c02_3": "九歲于興元淨明。",
    "X85n1590_014:0195c02_4": "禮佛冤和尚削染。",
    "X85n1590_014:0195c02_5": "聽事服勞。",
    "X85n1590_014:0195c02_6": "痛與鞭策。",
    "X85n1590_014:0195c03_7": "甲寅冤領昭覺院務。",
    "X85n1590_014:0195c03_8": "制中同眾打七。",
    "X85n1590_014:0195c03_9": "面觸露柱。",
    "X85n1590_014:0195c04_10": "忽爾暢然。",
    "X85n1590_014:0195c04_11": "呈偈曰。",
    "X85n1590_014:0195c04_12": "無參參處却參參。",
    "X85n1590_014:0195c04_13": "三脚驢兒苦著鞭。",
    "X85n1590_014:0195c05_14": "骨碎皮穿肝膽露。",
    "X85n1590_014:0195c05_15": "血淋淋地染長安。",
    "X85n1590_014:0195c05_16": "覺可之。",
    "X85n1590_014:0195c05_17": "壬申結制。",
    "X85n1590_014:0195c06_18": "師翁老人命秉拂。",
    "X85n1590_014:0195c06_19": "拈拂子云。",
    "X85n1590_014:0195c06_20": "法不孤起。",
    "X85n1590_014:0195c06_21": "仗境方生。",
    "X85n1590_014:0195c07_22": "時當秋末。",
    "X85n1590_014:0195c07_23": "萬卉潛榮。",
    "X85n1590_014:0195c07_24": "或抑或揚。",
    "X85n1590_014:0195c07_25": "觸目現成。",
    "X85n1590_014:0195c07_26": "豈不見。",
    "X85n1590_014:0195c08_27": "置山河大地于一毫端。",
    "X85n1590_014:0195c08_28": "透頂透底。",
    "X85n1590_014:0195c08_29": "絕羅絕籠。",
    "X85n1590_014:0195c08_30": "顯大機明大用。",
    "X85n1590_014:0195c09_31": "觸處普賢境界。",
    "X85n1590_014:0195c09_32": "發揮佛祖機籌。",
    "X85n1590_014:0195c09_33": "有時拋三放兩。",
    "X85n1590_014:0195c10_34": "拈尾作頭。",
    "X85n1590_014:0195c10_35": "有時充塞虗空。",
    "X85n1590_014:0195c10_36": "擘開華嶽。",
    "X85n1590_014:0195c10_37": "麻三斤。",
    "X85n1590_014:0195c10_38": "庭前栢。",
    "X85n1590_014:0195c11_39": "青州衫。",
    "X85n1590_014:0195c11_40": "天下老和尚家私。",
    "X85n1590_014:0195c11_41": "一時打貼。",
    "X85n1590_014:0195c11_42": "拂一拂云。",
    "X85n1590_014:0195c12_0": "咦。",
    "X85n1590_014:0195c12_1": "步步登高易。",
    "X85n1590_014:0195c12_2": "平地喫交難。",
    "X85n1590_014:0195c12_3": "擊禪床下座。",
    "X85n1590_014:0195c13_0": "籌室燦禪師秦州王氏子。",
    "X85n1590_014:0195c13_1": "廿歲禮普門端宗師鬀染。",
    "X85n1590_014:0195c14_0": "法名勝燦。",
    "X85n1590_014:0195c14_1": "次年就本邑護國圓應和尚座下圓具。",
    "X85n1590_014:0195c14_2": "腰包趨蜀。",
    "X85n1590_014:0195c15_3": "依昭覺佛冤和尚。",
    "X85n1590_014:0195c15_4": "巾瓶有年。",
    "X85n1590_014:0195c15_5": "覺甞拈馬祖一喝百丈耳聾公案。",
    "X85n1590_014:0195c16_6": "師纔聞舉便掩耳。",
    "X85n1590_014:0195c16_7": "一日又問。",
    "X85n1590_014:0195c16_8": "毛吞巨海。",
    "X85n1590_014:0195c17_9": "芥納須彌。",
    "X85n1590_014:0195c17_10": "且道是神通妙用。",
    "X85n1590_014:0195c17_11": "法爾如然。",
    "X85n1590_014:0195c17_12": "師禮拜了歸位。",
    "X85n1590_014:0195c18_13": "覺便歸方丈。",
    "X85n1590_014:0195c18_14": "機緣相契。",
    "X85n1590_014:0195c18_15": "而受印可。",
    "X85n1590_014:0195c18_16": "甲戌冬。",
    "X85n1590_014:0195c18_17": "職維那。",
    "X85n1590_014:0195c19_18": "結制。",
    "X85n1590_014:0195c19_19": "命秉拂。",
    "X85n1590_014:0195c19_20": "上堂云。",
    "X85n1590_014:0195c19_21": "赤體條條絕所依。",
    "X85n1590_014:0195c19_22": "生平莽鹵沒思惟。",
    "X85n1590_014:0195c20_23": "一椎打就無今古。",
    "X85n1590_014:0195c20_24": "途路行人誰個知。",
    "X85n1590_014:0195c20_25": "是日陞堂重漏逗。",
    "X85n1590_014:0195c21_26": "且喜當陽母自欺。",
    "X85n1590_014:0195c21_27": "燦上座。",
    "X85n1590_014:0195c21_28": "昔年向者裏打失眼睛。",
    "X85n1590_014:0195c22_29": "珠沉滄海。",
    "X85n1590_014:0195c22_30": "即今劍露丘墟。",
    "X85n1590_014:0195c22_31": "光射牛斗。",
    "X85n1590_014:0195c22_32": "人人具頂門正眼。",
    "X85n1590_014:0195c23_33": "個個超佛祖宗猷。",
    "X85n1590_014:0195c23_34": "耀古騰今。",
    "X85n1590_014:0195c23_35": "離見絕聞。",
    "X85n1590_014:0195c24_0": "當此之際。",
    "X85n1590_014:0195c24_1": "虗空倒卓。",
    "X85n1590_014:0195c24_2": "大海颺塵。",
    "X85n1590_014:0195c24_3": "應時及節即不無。",
    "X85n1590_014:0195c24_4": "且道結角羅紋一句。",
    "X85n1590_014:0196a01_5": "作麼生道。",
    "X85n1590_014:0196a01_6": "驀呈拄杖云。",
    "X85n1590_014:0196a01_7": "到者裏。",
    "X85n1590_014:0196a01_8": "不惟踏不著佛祖關鍵。",
    "X85n1590_014:0196a02_9": "管教覰之不及。",
    "X85n1590_014:0196a02_10": "卓拄杖下座。",
    "X85n1590_014:0196a04_0": "錦江禪燈卷第十四"
}