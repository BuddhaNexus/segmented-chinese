[
    {
        "source_sentence": "大宗地玄文本論卷第二十",
        "from": "T32n1669_020:0692b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "馬鳴菩薩造",
        "from": "T32n1669_020:0692b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真諦三藏譯",
        "from": "T32n1669_020:0692b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "39 現示本因決定證成除疑生信大決擇分現示本因決定證成除疑生信大決擇分第三十九如是已說校量過患呵責誹謗現示罪業大決擇分，次當說現示本因決定證成除疑生信大決擇分。",
        "from": "T32n1669_020:0692b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何？",
        "from": "T32n1669_020:0692b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰：",
        "from": "T32n1669_020:0692b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於往昔無量劫，　　隨世尊修菩薩行，",
        "from": "T32n1669_020:0692b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時世尊王家奴，　　國名金水其王名，",
        "from": "T32n1669_020:0692b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶金輪藏此大王，　　有三十億奴婢類，",
        "from": "T32n1669_020:0692b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有六十億大白馬，　　金銀等寶亦無盡。",
        "from": "T32n1669_020:0692b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有最下奴名常信，　　於中大王告常信：",
        "from": "T32n1669_020:0692b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝受此六十億馬，　　不離守護令無傷。",
        "from": "T32n1669_020:0692b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼奴受諸馬，　　常恒不離無傷護，",
        "from": "T32n1669_020:0692b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是六十億白馬，　　經一日食百兩金。",
        "from": "T32n1669_020:0692b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時常信作如是念，　　我身唯一馬眾多，",
        "from": "T32n1669_020:0692b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難哉難哉無傷畜，　　此諸馬惡馳難禁，",
        "from": "T32n1669_020:0692b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今何方便能護持？",
        "from": "T32n1669_020:0692b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則便依師學術方，　　術力變作萬白馬，",
        "from": "T32n1669_020:0692b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六十億白馬中中，　　𬽔𬽔𭡒𭡒立化馬，",
        "from": "T32n1669_020:0692b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發大聲作如是唱，　　馬馬皆悉作禮拜。",
        "from": "T32n1669_020:0692b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時有中中化馬，　　皆悉先前作禮拜，",
        "from": "T32n1669_020:0692b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘諸馬皆隨禮拜，　　作如是事已訖後，",
        "from": "T32n1669_020:0692b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化馬責小咎皆殺，　　諸馬更皆伏從化。",
        "from": "T32n1669_020:0692b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常信所願悉成就，　　都無所憂怪之心。",
        "from": "T32n1669_020:0692b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常信更復作是念：",
        "from": "T32n1669_020:0692b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　此諸馬皆從我化，除其為資具黃金，　　造作善業易穢報。",
        "from": "T32n1669_020:0692c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告諸馬作如是唱：",
        "from": "T32n1669_020:0692c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我身并及汝等身，　　於過去世心負悔，",
        "from": "T32n1669_020:0692c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具作一切惡業障，　　亦奴亦馬生此處，",
        "from": "T32n1669_020:0692c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒一切時不自在，　　病苦所逼飢寒亂，",
        "from": "T32n1669_020:0692c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時不得其安樂。",
        "from": "T32n1669_020:0692c06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若此生中不作善，後世亦受如是報，　　去去無有出離期。",
        "from": "T32n1669_020:0692c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如宜汝等諸畜生，　　除自資具供德處，",
        "from": "T32n1669_020:0692c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須臾飢渴感長樂。",
        "from": "T32n1669_020:0692c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無其閑閑空過時，　　況汝等畜生之身，",
        "from": "T32n1669_020:0692c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形穢心濁修何時？",
        "from": "T32n1669_020:0692c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如宜從我化無逆。",
        "from": "T32n1669_020:0692c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國中有殊勝鳥，　　名曰雅音聲覺悟，",
        "from": "T32n1669_020:0692c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此鳥聲不可思議，　　人聞其音大悲慨。",
        "from": "T32n1669_020:0692c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼六十億馬，　　聞常信所語已訖，",
        "from": "T32n1669_020:0692c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時發大聲悲哭，　　至十日量無休息。",
        "from": "T32n1669_020:0692c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸馬其聲響，　　與雅音聲覺悟鳥，",
        "from": "T32n1669_020:0692c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等平等無差別。",
        "from": "T32n1669_020:0692c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百兩金分為二分，　　一分以為生長具，",
        "from": "T32n1669_020:0692c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一分以為福田分，　　福田分五十兩金，",
        "from": "T32n1669_020:0692c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造作一金剛佛像，　　總有六十億佛像。",
        "from": "T32n1669_020:0692c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上第一大白馬，　　名曰長嚴雜色見，",
        "from": "T32n1669_020:0692c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常信及諸馬皆死，　　第二生中皆悉人，",
        "from": "T32n1669_020:0692c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一眷屬不相離，　　出家學道懃修行。",
        "from": "T32n1669_020:0692c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼六十億出家人，　　皆名馬鳴無別名，",
        "from": "T32n1669_020:0692c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從過去立名字故。",
        "from": "T32n1669_020:0692c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼時六十億白馬，　　今時六十億馬鳴，",
        "from": "T32n1669_020:0692c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最第一馬雜色見，　　今時中我身而已。",
        "from": "T32n1669_020:0692c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三生中亦人身，　　隨世尊行菩薩行，",
        "from": "T32n1669_020:0692c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四生中亦得人，　　隨世尊習忍辱行，",
        "from": "T32n1669_020:0692c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉轉經過五百生，　　次生中瞋因緣故，",
        "from": "T32n1669_020:0693a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得重蛇身受大苦，　　次生中受大魚身，",
        "from": "T32n1669_020:0693a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次生中亦得蛇身，　　以蛇身詣世尊所，",
        "from": "T32n1669_020:0693a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "投體懺悔發慚愧，　　以偈表意發大心。",
        "from": "T32n1669_020:0693a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次生中得人同分，　　隨世尊發願繫屬，",
        "from": "T32n1669_020:0693a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則世尊作如是願：",
        "from": "T32n1669_020:0693a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　我若成覺道圓滿，宣說百億修多羅，　　普利益廣略眾生。",
        "from": "T32n1669_020:0693a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我則作如是誓願：",
        "from": "T32n1669_020:0693a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　造作一百釋明論，分利益廣略眾生。",
        "from": "T32n1669_020:0693a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　如次後後經多生，世尊滿足行因海，　　安住法界山王位；",
        "from": "T32n1669_020:0693a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦漸漸修因行，　　證入第八不動地。",
        "from": "T32n1669_020:0693a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我則往詣世尊所，　　稽首頂禮立一面，",
        "from": "T32n1669_020:0693a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告我言：",
        "from": "T32n1669_020:0693a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝我同住一處中，　　發願作繫屬因緣，",
        "from": "T32n1669_020:0693a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如宜汝造作論教，　　我滅度後興正法。",
        "from": "T32n1669_020:0693a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我則更頂禮和南，　　向世尊作如是白：",
        "from": "T32n1669_020:0693a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今不知作論法，　　雅闇都無所覺達，",
        "from": "T32n1669_020:0693a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊為迷子，　　開曉造作論教法。",
        "from": "T32n1669_020:0693a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告我言：",
        "from": "T32n1669_020:0693a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　善哉善哉善男子！",
        "from": "T32n1669_020:0693a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦聽諦聽善思念，　　我當為汝分別說。",
        "from": "T32n1669_020:0693a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子諸佛法藏，　　無量無邊不說劫，",
        "from": "T32n1669_020:0693a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無窮盡亦無分界，　　如是無量法藏海，",
        "from": "T32n1669_020:0693a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若廣說論若略說，　　皆通該攝無餘持，",
        "from": "T32n1669_020:0693a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名造作論教法。",
        "from": "T32n1669_020:0693a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　我亦重疑更作請：",
        "from": "T32n1669_020:0693a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法門海無量無邊，　　我今未滿福智海，",
        "from": "T32n1669_020:0693a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居學位中未究竟，　　皆攝無餘持何得？",
        "from": "T32n1669_020:0693a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告我言：",
        "from": "T32n1669_020:0693a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有攝無量宗本法，　　若具攝此宗本法，",
        "from": "T32n1669_020:0693a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名說攝諸法藏。",
        "from": "T32n1669_020:0693a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　我亦更作如是白：",
        "from": "T32n1669_020:0693a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名為宗本法？",
        "from": "T32n1669_020:0693b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　其數幾有可知不？",
        "from": "T32n1669_020:0693b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告我言：",
        "from": "T32n1669_020:0693b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂三十四法大海，　　若有論者具此法，",
        "from": "T32n1669_020:0693b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名言圓滿大海論；",
        "from": "T32n1669_020:0693b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　　若有論者不具者，名言一分小智論。",
        "from": "T32n1669_020:0693b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今依三十四法，　　該攝安立無餘說，",
        "from": "T32n1669_020:0693b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣品類雖無量，　　而總言略說如是。",
        "from": "T32n1669_020:0693b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "40 勸持流通發大願海大決擇分勸持流通發大願海大決擇分第四十如是已說現示本因決定證成除疑生信大決擇分，次當說勸持流通發大願海大決擇分。",
        "from": "T32n1669_020:0693b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其相云何？",
        "from": "T32n1669_020:0693b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈曰：",
        "from": "T32n1669_020:0693b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願此圓滿大海論，　　遍不思議塵剎中，",
        "from": "T32n1669_020:0693b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生無量般若日，　　消除無邊無明闇，",
        "from": "T32n1669_020:0693b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉作三寶之大海，　　無非法而功德藏，",
        "from": "T32n1669_020:0693b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非請感周遍相應，　　非勸策自然成就。",
        "from": "T32n1669_020:0693b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大宗地玄文本論卷第二十",
        "from": "T32n1669_020:0693b16_100",
        "context_with_next_sentence": false
    }
]