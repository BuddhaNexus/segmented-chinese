[
    {
        "source_sentence": "播般曩結使波唐云步擲金剛念誦儀",
        "from": "T21n1232_001:0169b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命金剛手　　諸佛所依者",
        "from": "T21n1232_001:0169b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具普賢眾行　　住是本有身",
        "from": "T21n1232_001:0169b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始無終寂　　妙用施諸願",
        "from": "T21n1232_001:0169b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩王順三毒　　改劫故調柔",
        "from": "T21n1232_001:0169b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拯救諸有情　　從凡入佛地",
        "from": "T21n1232_001:0169b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世皆成就　　今演念誦義",
        "from": "T21n1232_001:0169b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次若有比丘比丘尼優婆塞優婆夷。",
        "from": "T21n1232_001:0169b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂修步擲明王心真言者。",
        "from": "T21n1232_001:0169b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當如法治地建立道場。",
        "from": "T21n1232_001:0169b12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修先行門面東而坐。",
        "from": "T21n1232_001:0169b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須供養飲食香華。",
        "from": "T21n1232_001:0169b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力當陳務令清潔。",
        "from": "T21n1232_001:0169b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入道場已遍禮諸佛。",
        "from": "T21n1232_001:0169b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心歸依願登正覺。",
        "from": "T21n1232_001:0169b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結跏趺坐或復半跏。",
        "from": "T21n1232_001:0169b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香泥塗手備諸印契。",
        "from": "T21n1232_001:0169b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次明三部及護身。",
        "from": "T21n1232_001:0169b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知諸教儀此略不抄。",
        "from": "T21n1232_001:0169b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次乃端身正坐息諸緣慮。",
        "from": "T21n1232_001:0169b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀己身皆由先世之因。",
        "from": "T21n1232_001:0169b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成此四大五蘊。",
        "from": "T21n1232_001:0169b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一一求實不得無常敗壞。",
        "from": "T21n1232_001:0169b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速起速滅即色即空。",
        "from": "T21n1232_001:0169b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是了了決定信解已。",
        "from": "T21n1232_001:0169b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其能觀之不可泯滅。",
        "from": "T21n1232_001:0169b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成真實智。",
        "from": "T21n1232_001:0169b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廓周法界。",
        "from": "T21n1232_001:0169b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "量等虛空。",
        "from": "T21n1232_001:0169b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大悲故從真起用。",
        "from": "T21n1232_001:0169b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃想己身形如本尊威儀亦等不一不異。",
        "from": "T21n1232_001:0169b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結前三昧金剛杵契。",
        "from": "T21n1232_001:0169b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印於心誦心真言曰。",
        "from": "T21n1232_001:0169b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一纈哩二合儒𡄦二合三由此契及真言加持。",
        "from": "T21n1232_001:0169b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者心如本尊。",
        "from": "T21n1232_001:0169b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及舉契印頭誦真言。",
        "from": "T21n1232_001:0169b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一部𡄦二合二由此契及真言加持故。",
        "from": "T21n1232_001:0169c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶同本尊。",
        "from": "T21n1232_001:0169c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦以契印額右肩左肩及心喉。",
        "from": "T21n1232_001:0169c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆誦被甲冑真言。",
        "from": "T21n1232_001:0169c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一儒𡄦二合二由此契及真言加持故。",
        "from": "T21n1232_001:0169c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成被金剛甲冑無能嬈害。",
        "from": "T21n1232_001:0169c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如前觀行及誦真言加持故。",
        "from": "T21n1232_001:0169c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者之身與本尊無異。",
        "from": "T21n1232_001:0169c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛受記龍天歸仰。",
        "from": "T21n1232_001:0169c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定成無上正等菩提。",
        "from": "T21n1232_001:0169c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛橛契契相以右無名指入左無名指小指間。",
        "from": "T21n1232_001:0169c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中指入左中指頭指間。",
        "from": "T21n1232_001:0169c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左亦如之。",
        "from": "T21n1232_001:0169c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘指並頭相拄。",
        "from": "T21n1232_001:0169c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想成火焰金剛杵形。",
        "from": "T21n1232_001:0169c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指著地。",
        "from": "T21n1232_001:0169c12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "卓而掣之。",
        "from": "T21n1232_001:0169c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掣一誦至三而止。",
        "from": "T21n1232_001:0169c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意大小標心。",
        "from": "T21n1232_001:0169c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成金剛堅固地界。",
        "from": "T21n1232_001:0169c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0169c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一枳里枳里嚩日羅二合二嚩日里部羅三滿馱滿馱四𤙖泮吒由此結契及真言加持故。",
        "from": "T21n1232_001:0169c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下至金剛際悉如金剛座。",
        "from": "T21n1232_001:0169c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天魔及諸障者不為惱害。",
        "from": "T21n1232_001:0169c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次方隅金剛牆界。",
        "from": "T21n1232_001:0169c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相准前地界。",
        "from": "T21n1232_001:0169c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開二大指竪之。",
        "from": "T21n1232_001:0169c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "側如牆形。",
        "from": "T21n1232_001:0169c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右遶身三轉。",
        "from": "T21n1232_001:0169c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "標心大小即成金剛堅固之城。",
        "from": "T21n1232_001:0169c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩尚不違越。",
        "from": "T21n1232_001:0169c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況諸餘難調伏者。",
        "from": "T21n1232_001:0169c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉不能近。",
        "from": "T21n1232_001:0169c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0169c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一沙羅沙羅二嚩日囉鉢囉迦引邏三吽泮吒行者次當想於壇中有八葉蓮華。",
        "from": "T21n1232_001:0169c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有師子之座。",
        "from": "T21n1232_001:0169c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "座上有七寶樓閣。",
        "from": "T21n1232_001:0169c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂諸瓔珞繒綵幡蓋。",
        "from": "T21n1232_001:0169c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶柱行列垂妙天衣。",
        "from": "T21n1232_001:0169c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周布香雲。",
        "from": "T21n1232_001:0169c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普雨雜花奏諸音樂。",
        "from": "T21n1232_001:0169c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶瓶閼伽天妙飲食摩尼為燈。",
        "from": "T21n1232_001:0169c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀已。",
        "from": "T21n1232_001:0170a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結大虛空藏契。",
        "from": "T21n1232_001:0170a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相合掌當心。",
        "from": "T21n1232_001:0170a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蹙二頭指如寶形。",
        "from": "T21n1232_001:0170a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并舒二大指押頭指根。",
        "from": "T21n1232_001:0170a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指右押左外相交。",
        "from": "T21n1232_001:0170a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互著手皆契成。",
        "from": "T21n1232_001:0170a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T21n1232_001:0170a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一伽伽那三婆嚩嚩日囉斛由結此契及誦真言加持故。",
        "from": "T21n1232_001:0170a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所想供養等物。",
        "from": "T21n1232_001:0170a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真實無異聖眾受用。",
        "from": "T21n1232_001:0170a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶車輅契契相二手內相叉仰掌。",
        "from": "T21n1232_001:0170a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指橫相拄。",
        "from": "T21n1232_001:0170a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指各捻頭指根下。",
        "from": "T21n1232_001:0170a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想成七寶車輅。",
        "from": "T21n1232_001:0170a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛賀御乘空而去。",
        "from": "T21n1232_001:0170a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於本尊之宮。",
        "from": "T21n1232_001:0170a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一都嚕都嚕二吽由結此印及真言加持故。",
        "from": "T21n1232_001:0170a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶車輅至尊宮殿。",
        "from": "T21n1232_001:0170a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想大聖本尊及諸眷屬昇輅車。",
        "from": "T21n1232_001:0170a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請車輅契契相準前契。",
        "from": "T21n1232_001:0170a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互以大指向身撥中指。",
        "from": "T21n1232_001:0170a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫悉底哩野地尾迦南薩嚩怛他蘖多南二唵二嚩日唧擬那野引迦囉沙野曀呬裔呬若奉送除來句加去句薄伽晚六馺嚩訶七由結此契誦真言加持故。",
        "from": "T21n1232_001:0170a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾從本宮來。",
        "from": "T21n1232_001:0170a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赴於道場依空而住。",
        "from": "T21n1232_001:0170a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊三昧耶降道場契。",
        "from": "T21n1232_001:0170a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相二手內相叉作拳。",
        "from": "T21n1232_001:0170a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右大指入。",
        "from": "T21n1232_001:0170a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌左大指向身招之。",
        "from": "T21n1232_001:0170a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一嚩日囉地哩迦二曀呬裔呬三若奉送除𪾼呬裔呬加伽車薄伽梵四嚩日囉地哩迦五由此真言契加持故。",
        "from": "T21n1232_001:0170a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊不違本誓。",
        "from": "T21n1232_001:0170a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "集於道場。",
        "from": "T21n1232_001:0170a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步擲契契相先正立。",
        "from": "T21n1232_001:0170b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉右足向左斷空。",
        "from": "T21n1232_001:0170b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐日右轉使頓地。",
        "from": "T21n1232_001:0170b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又移左足就右如初立。",
        "from": "T21n1232_001:0170b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃舉左足向右斷空。",
        "from": "T21n1232_001:0170b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因向左頓地屈膝。",
        "from": "T21n1232_001:0170b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃舉左手頭指已下成拳。",
        "from": "T21n1232_001:0170b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大指押頭指側。",
        "from": "T21n1232_001:0170b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想執三股杵極力展臂向左擬勢。",
        "from": "T21n1232_001:0170b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手大指入掌。",
        "from": "T21n1232_001:0170b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以中名指握之。",
        "from": "T21n1232_001:0170b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指及小指皆舒之。",
        "from": "T21n1232_001:0170b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極力垂臂手背向外。",
        "from": "T21n1232_001:0170b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死出現嗔目左顧想。",
        "from": "T21n1232_001:0170b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘臂悉如本尊執持。",
        "from": "T21n1232_001:0170b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦菩薩等。",
        "from": "T21n1232_001:0170b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每想器拭之手。",
        "from": "T21n1232_001:0170b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆誦器拭真言曰。",
        "from": "T21n1232_001:0170b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵虐又想舉身三威焰由如劫燒。",
        "from": "T21n1232_001:0170b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徹至十方一切世界。",
        "from": "T21n1232_001:0170b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣作佛事照觸言悟。",
        "from": "T21n1232_001:0170b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來初成道者願速轉法輪。",
        "from": "T21n1232_001:0170b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度眾生者破其小器。",
        "from": "T21n1232_001:0170b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨涅槃者勸請久住。",
        "from": "T21n1232_001:0170b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當勸發菩薩之眾願。",
        "from": "T21n1232_001:0170b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆速證無上菩提。",
        "from": "T21n1232_001:0170b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其中間慎無退屈。",
        "from": "T21n1232_001:0170b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復當啟發二乘之人。",
        "from": "T21n1232_001:0170b16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除其小兒令具大乘甚深空慧。",
        "from": "T21n1232_001:0170b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫之界威光所及。",
        "from": "T21n1232_001:0170b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樊藏識中雜染種子。",
        "from": "T21n1232_001:0170b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離三途具普賢行。",
        "from": "T21n1232_001:0170b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傍生餓鬼盡此一形不復更受。",
        "from": "T21n1232_001:0170b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦想樊諸地獄。",
        "from": "T21n1232_001:0170b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞滅無餘罪人。",
        "from": "T21n1232_001:0170b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫發菩提心諸惡魔等。",
        "from": "T21n1232_001:0170b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇者摧伏辟除退散。",
        "from": "T21n1232_001:0170b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是量久利益既畢。",
        "from": "T21n1232_001:0170b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想收威焰集於身中。",
        "from": "T21n1232_001:0170b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後出定。",
        "from": "T21n1232_001:0170b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復如如初依法。",
        "from": "T21n1232_001:0170b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而坐。",
        "from": "T21n1232_001:0170b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上方金剛網契契相準前牆契二大指捻頭指下節。",
        "from": "T21n1232_001:0170b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三迊。",
        "from": "T21n1232_001:0170b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上右轉三二迊。",
        "from": "T21n1232_001:0170b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一尾塞普羅二娜𡀩乞叉嚩日囉半惹囉三𤙖泮吒由此網契真言加持故。",
        "from": "T21n1232_001:0170b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當成金剛堅固之網。",
        "from": "T21n1232_001:0170b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火院密縫旋契。",
        "from": "T21n1232_001:0170b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契相左手掩右手背竪二大指。",
        "from": "T21n1232_001:0170c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右繞身三匝。",
        "from": "T21n1232_001:0170c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想金剛牆外。",
        "from": "T21n1232_001:0170c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火焰圍繞。",
        "from": "T21n1232_001:0170c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T21n1232_001:0170c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一阿娑莽擬儞二𤙖泮吒次捧閼伽器近額想浴聖眾之足。",
        "from": "T21n1232_001:0170c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普供養契契相二手合掌右押左交。",
        "from": "T21n1232_001:0170c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指初分即成。",
        "from": "T21n1232_001:0170c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言三遍。",
        "from": "T21n1232_001:0170c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦想無量無邊塗香雲海末香雲海燒香雲海花鬘雲海燈明雲海飲食雲海衣服雲海。",
        "from": "T21n1232_001:0170c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切供養等物皆成清淨廣多供養普供養真言曰。",
        "from": "T21n1232_001:0170c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫薩嚩怛他蘖帝彌逾二合一尾濕嚩暮契藐二薩嚩他欠三鄔娜伽帝四娑頗羅系󱁚五誐誐曩劍六馺嚩訶本尊心真言曰。",
        "from": "T21n1232_001:0170c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一纈𡄦二合二尾𡄦二合三部𡄦二合四素𡄦二合五儒𡄦二合六虐次復思惟己身與本尊無異。",
        "from": "T21n1232_001:0170c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持金剛子珠。",
        "from": "T21n1232_001:0170c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦次前心真言。",
        "from": "T21n1232_001:0170c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念誦時觀本尊形像。",
        "from": "T21n1232_001:0170c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或觀真言所有文字。",
        "from": "T21n1232_001:0170c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或觀本尊心上有真言字。",
        "from": "T21n1232_001:0170c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或寂靜心相應念誦。",
        "from": "T21n1232_001:0170c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不急不緩亦不太小。",
        "from": "T21n1232_001:0170c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "課限畢己心欲除息際。",
        "from": "T21n1232_001:0170c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍須良久住本尊觀。",
        "from": "T21n1232_001:0170c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復獻閼伽亦結普供養運心供養誦本真言。",
        "from": "T21n1232_001:0170c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結火院密縫契。",
        "from": "T21n1232_001:0170c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭上左轉一匝即成。",
        "from": "T21n1232_001:0170c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解界次結降道場契向外撥之。",
        "from": "T21n1232_001:0170c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想聖眾歸宮。",
        "from": "T21n1232_001:0170c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結護身契。",
        "from": "T21n1232_001:0170c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "準前印五處。",
        "from": "T21n1232_001:0170c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦本真言。",
        "from": "T21n1232_001:0170c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦大輪金剛真言二十一遍真言此略不寫抄如餘本所謂一種取用由誦此真言故。",
        "from": "T21n1232_001:0170c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有違犯軌則之愆。",
        "from": "T21n1232_001:0170c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉滅無餘功不虛棄。",
        "from": "T21n1232_001:0170c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其息災增益降伏三事法。",
        "from": "T21n1232_001:0170c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣如蘇悉地經中所陳。",
        "from": "T21n1232_001:0170c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任作成就當知福祐畫像法。",
        "from": "T21n1232_001:0171a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用應肘量𦁛如儀清淨。",
        "from": "T21n1232_001:0171a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圖畫本尊遍身青色。",
        "from": "T21n1232_001:0171a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右顧舒右足屈左膝。",
        "from": "T21n1232_001:0171a02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右上手垂下。",
        "from": "T21n1232_001:0171a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈大指入掌。",
        "from": "T21n1232_001:0171a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中名指握之。",
        "from": "T21n1232_001:0171a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒餘二指手背向外。",
        "from": "T21n1232_001:0171a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次手持桃垂下。",
        "from": "T21n1232_001:0171a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次下舒掌向下。",
        "from": "T21n1232_001:0171a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌中有火焰。",
        "from": "T21n1232_001:0171a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次手鐵斧。",
        "from": "T21n1232_001:0171a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次玉環次竪擬指。",
        "from": "T21n1232_001:0171a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指上有輪。",
        "from": "T21n1232_001:0171a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次拳大指押頭指側。",
        "from": "T21n1232_001:0171a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次羂索。",
        "from": "T21n1232_001:0171a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次舒五指。",
        "from": "T21n1232_001:0171a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甲長而利仰掌。",
        "from": "T21n1232_001:0171a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末手持弓。",
        "from": "T21n1232_001:0171a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右近上手三股杵。",
        "from": "T21n1232_001:0171a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒臂向上。",
        "from": "T21n1232_001:0171a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次劍。",
        "from": "T21n1232_001:0171a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次握圓石。",
        "from": "T21n1232_001:0171a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次短柄槌槌如重輪。",
        "from": "T21n1232_001:0171a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次兩隻箭。",
        "from": "T21n1232_001:0171a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次杖。",
        "from": "T21n1232_001:0171a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次獨股杵。",
        "from": "T21n1232_001:0171a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次舒掌。",
        "from": "T21n1232_001:0171a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌仰頭指大指相捻勢。",
        "from": "T21n1232_001:0171a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次寶棒棒上麁近把處漸細末。",
        "from": "T21n1232_001:0171a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒掌向下。",
        "from": "T21n1232_001:0171a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掌有焰鬘。",
        "from": "T21n1232_001:0171a11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆散竪。",
        "from": "T21n1232_001:0171a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦色以龍為冠鬘瓔珞。",
        "from": "T21n1232_001:0171a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手足釧及要縚等。",
        "from": "T21n1232_001:0171a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頻眉猛視利牙出現。",
        "from": "T21n1232_001:0171a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赤色方裙赤色傘蓋。",
        "from": "T21n1232_001:0171a13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王波旬俯伏在地。",
        "from": "T21n1232_001:0171a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而四臂通身青色。",
        "from": "T21n1232_001:0171a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴面向上求哀請命。",
        "from": "T21n1232_001:0171a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒右手五指側近額作歸命勢。",
        "from": "T21n1232_001:0171a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手拈地下。",
        "from": "T21n1232_001:0171a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手有一龍。",
        "from": "T21n1232_001:0171a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自肘後縛之。",
        "from": "T21n1232_001:0171a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮赤色而散。",
        "from": "T21n1232_001:0171a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如有大恐怖之狀。",
        "from": "T21n1232_001:0171a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭近大聖右足。",
        "from": "T21n1232_001:0171a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊左右有一金剛童子。",
        "from": "T21n1232_001:0171a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並通身赤色形體光碩。",
        "from": "T21n1232_001:0171a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右傍者。",
        "from": "T21n1232_001:0171a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持桃。",
        "from": "T21n1232_001:0171a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左執劍向下斫魔王勢。",
        "from": "T21n1232_001:0171a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮向後垂而作赤色。",
        "from": "T21n1232_001:0171a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左傍者左挽弓射魔王頭勢。",
        "from": "T21n1232_001:0171a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮髻似赤紗色。",
        "from": "T21n1232_001:0171a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之右字却是左。",
        "from": "T21n1232_001:0171a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左字却是右。",
        "from": "T21n1232_001:0171a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為隱。",
        "from": "T21n1232_001:0171a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步擲金剛修行儀軌一卷",
        "from": "T21n1232_001:0171a23_100",
        "context_with_next_sentence": false
    }
]