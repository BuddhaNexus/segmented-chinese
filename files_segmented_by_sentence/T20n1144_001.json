[
    {
        "source_sentence": "佛說彌勒菩薩發願王偈",
        "from": "T20n1144_001:0600c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內閣掌譯西番蒙古諸文西番學",
        "from": "T20n1144_001:0600c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總管儀賓工布查布譯",
        "from": "T20n1144_001:0600c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵語阿喇鴉黑厄答喇巴呢達哈阿納喇阿雜阿。",
        "from": "T20n1144_001:0600c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華言聖彌勒願王。",
        "from": "T20n1144_001:0600c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮一切諸佛菩薩摩訶薩。",
        "from": "T20n1144_001:0600c20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T20n1144_001:0600c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫彌勒菩薩摩訶薩。",
        "from": "T20n1144_001:0600c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往昔誓行菩提行時。",
        "from": "T20n1144_001:0600c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜六時。",
        "from": "T20n1144_001:0600c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偏袒右肩。",
        "from": "T20n1144_001:0600c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地。",
        "from": "T20n1144_001:0600c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬。",
        "from": "T20n1144_001:0600c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而發如是願文。",
        "from": "T20n1144_001:0600c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮一切佛　　及具天眼仙",
        "from": "T20n1144_001:0600c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩　　并諸聲聞眾",
        "from": "T20n1144_001:0600c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令避惡趣𡑞　　而示涅槃路",
        "from": "T20n1144_001:0600c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引入無老死　　敬禮菩提心",
        "from": "T20n1144_001:0600c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我由無明心　　所作一切罪",
        "from": "T20n1144_001:0600c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於佛面前　　懺悔盡無餘",
        "from": "T20n1144_001:0600c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自我三業門　　所積資糧福",
        "from": "T20n1144_001:0601a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我普慧種　　願我道無盡",
        "from": "T20n1144_001:0601a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸國中　　所有供養佛",
        "from": "T20n1144_001:0601a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛昔隨喜者　　我今皆隨喜",
        "from": "T20n1144_001:0601a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔一切罪　　隨喜諸善根",
        "from": "T20n1144_001:0601a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮一切佛　　願得大智慧",
        "from": "T20n1144_001:0601a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方一切處　　所有大菩薩",
        "from": "T20n1144_001:0601a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止於十地者　　請速等正覺",
        "from": "T20n1144_001:0601a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既證圓覺心　　降伏諸魔軍",
        "from": "T20n1144_001:0601a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利諸有情　　願請轉法輪",
        "from": "T20n1144_001:0601a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大法鼓音　　度眾生苦際",
        "from": "T20n1144_001:0601a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願經無量劫　　常住世說法",
        "from": "T20n1144_001:0601a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祈運大悲智　　慈濟諸有情",
        "from": "T20n1144_001:0601a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陷溺貪欲澤　　恩愛所纏縛",
        "from": "T20n1144_001:0601a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生被障礙　　諸佛不憎捐",
        "from": "T20n1144_001:0601a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲諸含識　　拔出三有海",
        "from": "T20n1144_001:0601a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切三世佛　　所行諸道法",
        "from": "T20n1144_001:0601a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今皆隨學　　願證菩提道",
        "from": "T20n1144_001:0601a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同登六彼岸　　度六道眾生",
        "from": "T20n1144_001:0601a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證得六神通　　願成無上道",
        "from": "T20n1144_001:0601a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無生及本源　　無處無自性",
        "from": "T20n1144_001:0601a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟此真空理　　無智亦無得",
        "from": "T20n1144_001:0601a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無命無眾生　　無背無取向",
        "from": "T20n1144_001:0601a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願達無我法　　即等大仙佛",
        "from": "T20n1144_001:0601a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願不住二執　　所攝一切物",
        "from": "T20n1144_001:0601a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益眾生　　不悋行布施",
        "from": "T20n1144_001:0601a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物種侈靡盛　　我應用豐足",
        "from": "T20n1144_001:0601a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "物性等空寂　　圓滿布施度",
        "from": "T20n1144_001:0601a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所受止作品　　無瑕最清淨",
        "from": "T20n1144_001:0601a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及無癡矜慢　　圓滿戒律度",
        "from": "T20n1144_001:0601b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如地水火風　　四大無觸背",
        "from": "T20n1144_001:0601b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "侵犯靡瞋恨　　圓滿忍辱度",
        "from": "T20n1144_001:0601b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心始終勤　　恒喜不懈弛",
        "from": "T20n1144_001:0601b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心勇猛力　　圓滿精進度",
        "from": "T20n1144_001:0601b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏正定聚　　如幻三摩地",
        "from": "T20n1144_001:0601b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛禪那等　　圓滿靜慮度",
        "from": "T20n1144_001:0601b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三種解脫門　　三時平等法",
        "from": "T20n1144_001:0601b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞思修明了　　圓滿智慧度",
        "from": "T20n1144_001:0601b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛所稱讚　　熾盛光赫奕",
        "from": "T20n1144_001:0601b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修菩薩行　　圓滿自他志",
        "from": "T20n1144_001:0601b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行此菩提道　　名稱慈氏子",
        "from": "T20n1144_001:0601b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓滿六度行　　超於十地位",
        "from": "T20n1144_001:0601b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以此善願眾生　　命終速往兜率宮",
        "from": "T20n1144_001:0601b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受生皆於見法閣　　即為慈氏之長子",
        "from": "T20n1144_001:0601b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十地自在降閻浮　　證得十力大位時",
        "from": "T20n1144_001:0601b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願受妙法甘露味　　圓滿佛行盡無餘",
        "from": "T20n1144_001:0601b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此命終承願力　　即得上生兜率天",
        "from": "T20n1144_001:0601b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忻慶奉事慈氏尊　　速得承授菩提記",
        "from": "T20n1144_001:0601b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難。",
        "from": "T20n1144_001:0601b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知慈氏菩薩摩訶薩。",
        "from": "T20n1144_001:0601b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此以實善巧修淨行業。",
        "from": "T20n1144_001:0601b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道路平順。",
        "from": "T20n1144_001:0601b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而獲無上菩提。",
        "from": "T20n1144_001:0601b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成等正覺。",
        "from": "T20n1144_001:0601b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就真實大方便門。",
        "from": "T20n1144_001:0601b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按此經於漢藏未見。",
        "from": "T20n1144_001:0601b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而番本亦無出。",
        "from": "T20n1144_001:0601b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然西國諸賢。",
        "from": "T20n1144_001:0601b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頗有註解。",
        "from": "T20n1144_001:0601b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且普同作為恒常功課。",
        "from": "T20n1144_001:0601b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與華嚴行願品。",
        "from": "T20n1144_001:0601b25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十五佛行願品。",
        "from": "T20n1144_001:0601b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱為三種大懺願。",
        "from": "T20n1144_001:0601b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚略擬之。",
        "from": "T20n1144_001:0601b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋初自梵文譯時。",
        "from": "T20n1144_001:0601b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或于彌勒上生下生等經。",
        "from": "T20n1144_001:0601b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "節取切要者也多分唐竺法護所譯。",
        "from": "T20n1144_001:0601b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彌勒菩薩下生經相近今時海內清寧。",
        "from": "T20n1144_001:0601b28_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三教並盛。",
        "from": "T20n1144_001:0601b28_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資用不乏。",
        "from": "T20n1144_001:0601b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人民向善者多。",
        "from": "T20n1144_001:0601b29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近來常聞修建龍華會者。",
        "from": "T20n1144_001:0601c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憶為或有欲持誦者。",
        "from": "T20n1144_001:0601c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因特譯出漢文。",
        "from": "T20n1144_001:0601c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便於信氏誦讀仰祈。",
        "from": "T20n1144_001:0601c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖慈加護廣布流通為願焉。",
        "from": "T20n1144_001:0601c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　乾隆八年正月吉日翻竟於廣仁彌勒院",
        "from": "T20n1144_001:0601c04_100",
        "context_with_next_sentence": false
    }
]