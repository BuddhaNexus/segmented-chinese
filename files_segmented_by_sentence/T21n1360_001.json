[
    {
        "source_sentence": "六門陀羅尼經",
        "from": "T21n1360_001:0878a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐三藏法師玄奘奉　詔譯",
        "from": "T21n1360_001:0878a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時薄伽梵。在淨居天上依空而",
        "from": "T21n1360_001:0878a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住眾妙七寶莊嚴道場。",
        "from": "T21n1360_001:0878a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與無央數菩薩眾俱。",
        "from": "T21n1360_001:0878a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸菩薩。",
        "from": "T21n1360_001:0878a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子若欲利益安樂眾生。",
        "from": "T21n1360_001:0878a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當受此六門陀羅尼法。",
        "from": "T21n1360_001:0878a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂我流轉於生死中諸所受苦。",
        "from": "T21n1360_001:0878a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令眾生同受斯苦。",
        "from": "T21n1360_001:0878a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有所受富貴世樂。",
        "from": "T21n1360_001:0878a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸眾生同受斯樂。",
        "from": "T21n1360_001:0878a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所作惡若未先悔終不發言稱無上法。",
        "from": "T21n1360_001:0878a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我諸所有眾魔之業若未先覺。",
        "from": "T21n1360_001:0878a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不舉心緣無上法。",
        "from": "T21n1360_001:0878a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我諸所有波羅蜜多所攝。",
        "from": "T21n1360_001:0878a14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世及出世廣大善根。",
        "from": "T21n1360_001:0878a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸眾生皆當速證無上智果。",
        "from": "T21n1360_001:0878a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我證解脫亦願眾生皆得解脫。",
        "from": "T21n1360_001:0878a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令住著生死涅槃。",
        "from": "T21n1360_001:0878a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼曰。",
        "from": "T21n1360_001:0878a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺謎懺謎莫閉反　羼諦羼諦　跋迭麗跋迭麗　穌跋迭麗穌跋迭麗　諦誓諦誓戰迭麗戰迭麗　戰迭邏伐底丁履反低殊伐底　達磨伐底　薩縛結隷鑠　毘輸達儞　薩縛阿剌託　莎達儞　末諾僧輸達儞莎訶若有清信善男子善女人。",
        "from": "T21n1360_001:0878a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於日夜六時。",
        "from": "T21n1360_001:0878a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦如是六門陀羅尼者。",
        "from": "T21n1360_001:0878a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人所有一切業障皆悉消滅。",
        "from": "T21n1360_001:0878a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾悟阿耨多羅三藐三菩提。",
        "from": "T21n1360_001:0878a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時薄伽梵說是經已。",
        "from": "T21n1360_001:0878a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切菩薩摩訶薩及諸天眾。",
        "from": "T21n1360_001:0878a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T21n1360_001:0878a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六門陀羅尼經",
        "from": "T21n1360_001:0878a28_100",
        "context_with_next_sentence": false
    }
]