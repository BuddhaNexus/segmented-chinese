[
    {
        "source_sentence": "護身命經",
        "from": "T85n2866_001:1326b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "者信佛妙法受習不忘。六者不貪世榮斷俗",
        "from": "T85n2866_001:1326b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣。七者願習聖慧為一切護。八者願集眾",
        "from": "T85n2866_001:1326b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生為作倡道。",
        "from": "T85n2866_001:1326b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者在所墮生常願值佛。",
        "from": "T85n2866_001:1326b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者守持禁戒廣度群生。",
        "from": "T85n2866_001:1326b08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一者博學眾智宣示四輩。",
        "from": "T85n2866_001:1326b09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二者常願與佛世世相值廣說道要度人無量。",
        "from": "T85n2866_001:1326b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為十二聖慧者。",
        "from": "T85n2866_001:1326b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T85n2866_001:1326b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有比丘尼優婆塞優婆夷國王子及諸婇女。",
        "from": "T85n2866_001:1326b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有能奉行此十二法者。",
        "from": "T85n2866_001:1326b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在所墮生常得值佛。",
        "from": "T85n2866_001:1326b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周旋教化長離眾苦入三法門功得成就。",
        "from": "T85n2866_001:1326b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾得至佛猶步三界。",
        "from": "T85n2866_001:1326b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所罣礙無能斷者。",
        "from": "T85n2866_001:1326b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自五前世修行此事自致得佛。",
        "from": "T85n2866_001:1326b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有國王大臣長者中宮眷屬及諸善男子善女人四部弟子。",
        "from": "T85n2866_001:1326b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求此無上道廣度一切者。",
        "from": "T85n2866_001:1326b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求三乘法者。",
        "from": "T85n2866_001:1326b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求早度世取無為者。",
        "from": "T85n2866_001:1326b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求上生妙樂天上者。",
        "from": "T85n2866_001:1326b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求轉輪聖王者。",
        "from": "T85n2866_001:1326b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求尊貴富者。",
        "from": "T85n2866_001:1326b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有女人求男子身者。",
        "from": "T85n2866_001:1326b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求世世常與明師相隨教化者。",
        "from": "T85n2866_001:1326b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦當讀此經。",
        "from": "T85n2866_001:1326b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是一切諸願所欲者。",
        "from": "T85n2866_001:1326b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當讀此經。",
        "from": "T85n2866_001:1326b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經尊猛。",
        "from": "T85n2866_001:1326b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子善女人能奉行持此經者。",
        "from": "T85n2866_001:1326b25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為十方現在諸佛威神所護。",
        "from": "T85n2866_001:1326b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為過去七佛所護。",
        "from": "T85n2866_001:1326b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸尊菩薩大弟子所護為。",
        "from": "T85n2866_001:1326b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又天龍鬼神日月五星二十八宿一切諸尊天等。",
        "from": "T85n2866_001:1326b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常隨擁護讀是經者。",
        "from": "T85n2866_001:1326b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不令橫死。",
        "from": "T85n2866_001:1326b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾邪皆不得嬈害。",
        "from": "T85n2866_001:1326b29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是善男子善女人行菩薩之道故。",
        "from": "T85n2866_001:1326c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方眾聖皆共護視。",
        "from": "T85n2866_001:1326c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀是經者功德無量。",
        "from": "T85n2866_001:1326c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛不二言。",
        "from": "T85n2866_001:1326c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是經者。",
        "from": "T85n2866_001:1326c02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持者書寫者。",
        "from": "T85n2866_001:1326c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所願悉得。",
        "from": "T85n2866_001:1326c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難汝好諦聽諦聽受持是經。",
        "from": "T85n2866_001:1326c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懃教一切人受學諷誦讀之。",
        "from": "T85n2866_001:1326c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝莫忘墮。",
        "from": "T85n2866_001:1326c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難即言。",
        "from": "T85n2866_001:1326c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受天尊教。",
        "from": "T85n2866_001:1326c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經時。",
        "from": "T85n2866_001:1326c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐中有長者女名曰善信。",
        "from": "T85n2866_001:1326c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與五百同輩一時即起。",
        "from": "T85n2866_001:1326c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首佛足五體投地。",
        "from": "T85n2866_001:1326c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長跪白佛言。",
        "from": "T85n2866_001:1326c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊信等女人罪穢嬰身。",
        "from": "T85n2866_001:1326c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蒙佛慈恩得聞聖法。",
        "from": "T85n2866_001:1326c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以女賤願為弟子。",
        "from": "T85n2866_001:1326c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言。",
        "from": "T85n2866_001:1326c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善來諸女。",
        "from": "T85n2866_001:1326c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝宿有福應得值佛。",
        "from": "T85n2866_001:1326c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂聞法者真得度苦。",
        "from": "T85n2866_001:1326c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生生之處遠離女身。",
        "from": "T85n2866_001:1326c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛受五戒為清信女。",
        "from": "T85n2866_001:1326c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾會無不歡喜。",
        "from": "T85n2866_001:1326c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各前以頭面著地悉受五戒。",
        "from": "T85n2866_001:1326c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T85n2866_001:1326c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善信女等久生於世。",
        "from": "T85n2866_001:1326c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未聞佛時未聞法時。",
        "from": "T85n2866_001:1326c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為怨師所怪。",
        "from": "T85n2866_001:1326c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨世因緣或毀滅正法。",
        "from": "T85n2866_001:1326c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或破塔寺。",
        "from": "T85n2866_001:1326c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或殺真人。",
        "from": "T85n2866_001:1326c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或負三尊財物。",
        "from": "T85n2866_001:1326c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或殺父母。",
        "from": "T85n2866_001:1326c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或犯眾怨。",
        "from": "T85n2866_001:1326c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自覺智。",
        "from": "T85n2866_001:1326c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作眾罪不可稱計。",
        "from": "T85n2866_001:1326c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今得見佛。",
        "from": "T85n2866_001:1326c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心開意解。",
        "from": "T85n2866_001:1326c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及知前世所行為非。",
        "from": "T85n2866_001:1326c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信等同輩自今以後。",
        "from": "T85n2866_001:1326c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改住修來奉佛尊戒。",
        "from": "T85n2866_001:1326c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并持此經。",
        "from": "T85n2866_001:1326c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世世不犯。",
        "from": "T85n2866_001:1326c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願佛哀愍悉賜五戒。",
        "from": "T85n2866_001:1326c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸女。",
        "from": "T85n2866_001:1326c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諦聽受持。",
        "from": "T85n2866_001:1326c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者守仁不殺恩及群生。",
        "from": "T85n2866_001:1326c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者義護不盜損己濟眾。",
        "from": "T85n2866_001:1326c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者貞潔不婬行無沾污。",
        "from": "T85n2866_001:1326c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者言不詳䛴不犯口過。",
        "from": "T85n2866_001:1326c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者遠酒不飲不犯眾怨。",
        "from": "T85n2866_001:1326c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修奉齋戒常行大慈。",
        "from": "T85n2866_001:1326c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪願一切尊修佛語。",
        "from": "T85n2866_001:1326c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不中悔。",
        "from": "T85n2866_001:1326c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任力所能寧守善而死不犯怨而生。",
        "from": "T85n2866_001:1326c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等以來持佛禁戒。",
        "from": "T85n2866_001:1326c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天所嘆。",
        "from": "T85n2866_001:1326c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫德隨俗邪罔跪拜鬼神護持禁戒。",
        "from": "T85n2866_001:1326c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如拔頭然。",
        "from": "T85n2866_001:1326c27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐自觀身。",
        "from": "T85n2866_001:1326c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形不久立。",
        "from": "T85n2866_001:1326c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色不久解。",
        "from": "T85n2866_001:1326c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命如風遇少疾如裏。",
        "from": "T85n2866_001:1326c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿持容恣自處怨行。",
        "from": "T85n2866_001:1326c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬物無常。",
        "from": "T85n2866_001:1326c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當建精進棄損世念。",
        "from": "T85n2866_001:1326c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如菩薩行所願發心。",
        "from": "T85n2866_001:1326c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今世後世欲求何等。",
        "from": "T85n2866_001:1327a01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如願悉得終不虛也。",
        "from": "T85n2866_001:1327a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T85n2866_001:1327a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等護行可得至佛。",
        "from": "T85n2866_001:1327a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛道不可不學。",
        "from": "T85n2866_001:1327a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經法不可不讀。",
        "from": "T85n2866_001:1327a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今得佛但積學所致。",
        "from": "T85n2866_001:1327a03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘妙法。",
        "from": "T85n2866_001:1327a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無男無女無貴無賤。",
        "from": "T85n2866_001:1327a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞是經者。",
        "from": "T85n2866_001:1327a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛加護。",
        "from": "T85n2866_001:1327a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所願悉得。",
        "from": "T85n2866_001:1327a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說是經時。",
        "from": "T85n2866_001:1327a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍鬼神帝王人□及四部弟子有三億人。",
        "from": "T85n2866_001:1327a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見佛說是經。",
        "from": "T85n2866_001:1327a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆大歡喜嘆未曾有。",
        "from": "T85n2866_001:1327a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各發無上正真道意。",
        "from": "T85n2866_001:1327a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前以頭面著地作禮奉行。",
        "from": "T85n2866_001:1327a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告阿難。",
        "from": "T85n2866_001:1327a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝諦聽受持廣宣流布。",
        "from": "T85n2866_001:1327a09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切眾生有形之類。",
        "from": "T85n2866_001:1327a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦書寫供養。",
        "from": "T85n2866_001:1327a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛之要法能除無數劫極重之罪。",
        "from": "T85n2866_001:1327a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能度無量無邊阿僧祇眾生悉得解脫。",
        "from": "T85n2866_001:1327a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經佛口中所出。",
        "from": "T85n2866_001:1327a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有□讀一句一偈讀嘆之者。",
        "from": "T85n2866_001:1327a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾邪違道一切怨鬼不得來近。",
        "from": "T85n2866_001:1327a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命正長終不橫死。",
        "from": "T85n2866_001:1327a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所欲求者如願悉得。",
        "from": "T85n2866_001:1327a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是經時。",
        "from": "T85n2866_001:1327a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大眾及諸龍鬼神四部弟子。",
        "from": "T85n2866_001:1327a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮佛足。",
        "from": "T85n2866_001:1327a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受天尊教一心奉行。",
        "from": "T85n2866_001:1327a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正光二年十二月十五日　信士張阿宜寫護身命經受持讀誦供養經。",
        "from": "T85n2866_001:1327a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上及七世父母。",
        "from": "T85n2866_001:1327a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下及己身皆誠善㖒之道。",
        "from": "T85n2866_001:1327a19_12",
        "context_with_next_sentence": true
    }
]