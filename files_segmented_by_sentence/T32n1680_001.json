[
    {
        "source_sentence": "一百五十讚佛頌",
        "from": "T32n1680_001:0758b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者摩咥里制吒造",
        "from": "T32n1680_001:0758b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐沙門義淨於那爛陀寺譯",
        "from": "T32n1680_001:0758b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊最殊勝，　　善斷諸惑種，",
        "from": "T32n1680_001:0758b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量勝功德，　　總集如來身。",
        "from": "T32n1680_001:0758b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛可歸依，　　可讚可承事，",
        "from": "T32n1680_001:0758b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如理思惟者，　　宜應住此教。",
        "from": "T32n1680_001:0758b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸惡煩惱習，　　護世者已除，",
        "from": "T32n1680_001:0758c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智二俱圓，　　唯尊不退沒。",
        "from": "T32n1680_001:0758c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱生惡見者，　　於尊起嫌恨，",
        "from": "T32n1680_001:0758c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伺求身語業，　　無能得瑕隙。",
        "from": "T32n1680_001:0758c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "記我得人身，　　聞法生歡喜，",
        "from": "T32n1680_001:0758c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如巨海內，　　盲龜遇楂穴。",
        "from": "T32n1680_001:0758c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忘念恒隨逐，　　惑業墮深坑，",
        "from": "T32n1680_001:0758c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故我以言詞，　　歎佛實功德。",
        "from": "T32n1680_001:0758c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼無量境，　　聖德無邊際，",
        "from": "T32n1680_001:0758c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為求自利故，　　我今讚少分。",
        "from": "T32n1680_001:0758c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮無師智，　　希有眾事性，",
        "from": "T32n1680_001:0758c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福慧及威光，　　誰能知數量？",
        "from": "T32n1680_001:0758c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來德無限，　　無等無能說，",
        "from": "T32n1680_001:0758c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今求福利，　　假讚以名言。",
        "from": "T32n1680_001:0758c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我智力微淺，　　佛德無崖際，",
        "from": "T32n1680_001:0758c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願大慈悲，　　拯我無歸處。",
        "from": "T32n1680_001:0758c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨親悉平等，　　無緣起大悲，",
        "from": "T32n1680_001:0758c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普於眾生界，　　恒作真善友。",
        "from": "T32n1680_001:0758c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內財尚能捨，　　何況於外財，",
        "from": "T32n1680_001:0758c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊無悋惜心，　　求者滿其願。",
        "from": "T32n1680_001:0758c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以身護彼身，　　以命贖他命，",
        "from": "T32n1680_001:0758c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全軀救一鴿，　　歡喜無慳悋。",
        "from": "T32n1680_001:0758c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊不畏惡道，　　亦不貪善趣，",
        "from": "T32n1680_001:0758c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但為心澄潔，　　尸羅由此成。",
        "from": "T32n1680_001:0758c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常離諸邪曲，　　恒親質直者，",
        "from": "T32n1680_001:0758c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸業本性空，　　唯居第一義。",
        "from": "T32n1680_001:0758c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾苦逼其身，　　尊能善安慮，",
        "from": "T32n1680_001:0758c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正智斷諸惑，　　有過悉興悲。",
        "from": "T32n1680_001:0758c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "殉命濟他難，　　生無量歡喜，",
        "from": "T32n1680_001:0758c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如死忽重蘇，　　此喜過於彼。",
        "from": "T32n1680_001:0759a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨對害其身，　　一切時恒惱，",
        "from": "T32n1680_001:0759a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀其過惡，　　常起大悲心。",
        "from": "T32n1680_001:0759a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正遍菩提種，　　心恒所珍玩，",
        "from": "T32n1680_001:0759a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大雄難勝智，　　無有能及者。",
        "from": "T32n1680_001:0759a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無等菩提果，　　苦行是其因，",
        "from": "T32n1680_001:0759a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此不顧身，　　勤修諸勝品。",
        "from": "T32n1680_001:0759a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豪貴與貧賤，　　等引以大悲，",
        "from": "T32n1680_001:0759a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸差別中，　　而無高下想。",
        "from": "T32n1680_001:0759a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝樂等持果，　　心無有貪著，",
        "from": "T32n1680_001:0759a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普濟諸群生，　　大悲無間斷。",
        "from": "T32n1680_001:0759a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊雖遭極苦，　　於樂不悕求，",
        "from": "T32n1680_001:0759a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙智諸功德，　　殊勝無能共。",
        "from": "T32n1680_001:0759a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "染淨諸雜法，　　簡偽取其真，",
        "from": "T32n1680_001:0759a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如清淨鵝王，　　飲乳棄其水。",
        "from": "T32n1680_001:0759a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無量億劫，　　勇猛趣菩提，",
        "from": "T32n1680_001:0759a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼生生中，　　喪身求妙法。",
        "from": "T32n1680_001:0759a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三僧祇數量，　　精勤無懈惓，",
        "from": "T32n1680_001:0759a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持此為勝伴，　　以證妙菩提。",
        "from": "T32n1680_001:0759a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊無嫉姤心，　　於劣除輕想，",
        "from": "T32n1680_001:0759a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等無乖諍，　　勝行悉圓成。",
        "from": "T32n1680_001:0759a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊唯重因行，　　非求果位圓，",
        "from": "T32n1680_001:0759a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍修諸勝業，　　眾德自成滿。",
        "from": "T32n1680_001:0759a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤修出離法，　　超昇眾行頂，",
        "from": "T32n1680_001:0759a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐臥經行處，　　無非勝福田。",
        "from": "T32n1680_001:0759a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔除眾過染，　　增長清淨德，",
        "from": "T32n1680_001:0759a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯由積行成，　　唯尊最無上。",
        "from": "T32n1680_001:0759a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾福皆圓滿，　　諸過悉蠲除，",
        "from": "T32n1680_001:0759a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來淨法身，　　塵習皆已斷。",
        "from": "T32n1680_001:0759a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "資糧集更集，　　功歸調御身，",
        "from": "T32n1680_001:0759b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求於譬類，　　無能與佛等。",
        "from": "T32n1680_001:0759b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觀諸世間，　　災橫多障惱，",
        "from": "T32n1680_001:0759b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱有少分善，　　易得為比對；",
        "from": "T32n1680_001:0759b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離諸過患，　　湛然安不動，",
        "from": "T32n1680_001:0759b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝諸善根，　　無能為譬喻。",
        "from": "T32n1680_001:0759b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來智深遠，　　無底無邊際，",
        "from": "T32n1680_001:0759b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世事喻佛身，　　牛跡方大海。",
        "from": "T32n1680_001:0759b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深仁荷一切，　　世間無有比，",
        "from": "T32n1680_001:0759b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地持重擔，　　喻此實為輕。",
        "from": "T32n1680_001:0759b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡闇已除，　　牟尼光普照，",
        "from": "T32n1680_001:0759b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世智非能譬，　　如螢對日光。",
        "from": "T32n1680_001:0759b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來三業淨，　　秋月皎空池，",
        "from": "T32n1680_001:0759b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世潔喻佛身，　　俱成塵濁性。",
        "from": "T32n1680_001:0759b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸所引，　　世中殊勝事，",
        "from": "T32n1680_001:0759b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛法逈超過，　　俗事可哀愍。",
        "from": "T32n1680_001:0759b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖法珍寶聚，　　佛最居其頂，",
        "from": "T32n1680_001:0759b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上無比中，　　唯佛與佛等。",
        "from": "T32n1680_001:0759b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來聖智海，　　隨樂歎少分，",
        "from": "T32n1680_001:0759b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鄙詞讚勝德，　　對此實多慚。",
        "from": "T32n1680_001:0759b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時俗覩降魔，　　一切咸歸伏，",
        "from": "T32n1680_001:0759b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀彼同真性，　　我謂等輕毛。",
        "from": "T32n1680_001:0759b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假令大戰陣，　　智勇能摧伏，",
        "from": "T32n1680_001:0759b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖德超世間，　　降彼非為喻。",
        "from": "T32n1680_001:0759b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隣次降魔後，　　於夜後分中，",
        "from": "T32n1680_001:0759b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷諸煩惱習，　　勝德皆圓滿。",
        "from": "T32n1680_001:0759b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖智除眾闇，　　超過千日光，",
        "from": "T32n1680_001:0759b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧伏諸邪宗，　　希有無能比。",
        "from": "T32n1680_001:0759b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三善根圓滿，　　永滅貪恚癡，",
        "from": "T32n1680_001:0759b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種習悉已除，　　清淨無能喻。",
        "from": "T32n1680_001:0759c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙法尊恒讚，　　不正法恒非，",
        "from": "T32n1680_001:0759c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於斯邪正處，　　心無有憎愛。",
        "from": "T32n1680_001:0759c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於聖弟子眾，　　及外道師徒，",
        "from": "T32n1680_001:0759c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼違順中，　　佛心初無二。",
        "from": "T32n1680_001:0759c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於德情無著，　　德者亦非貪，",
        "from": "T32n1680_001:0759c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉極無垢，　　聖智恒圓潔。",
        "from": "T32n1680_001:0759c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸根常湛寂，　　永離迷妄心，",
        "from": "T32n1680_001:0759c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸境界中，　　現量由親覩。",
        "from": "T32n1680_001:0759c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念慧窮真際，　　非凡愚所測，",
        "from": "T32n1680_001:0759c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善安立語言，　　證彼亡言處。",
        "from": "T32n1680_001:0759c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜無礙光，　　皎潔逾輝映，",
        "from": "T32n1680_001:0759c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙色世希有，　　孰不懷敬心？",
        "from": "T32n1680_001:0759c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有暫初觀，　　或復恒瞻覩，",
        "from": "T32n1680_001:0759c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙相曾無二，　　前後悉同歡。",
        "from": "T32n1680_001:0759c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝威德身，　　觀者心無厭，",
        "from": "T32n1680_001:0759c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱經無量劫，　　欣仰似初觀。",
        "from": "T32n1680_001:0759c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所依之德體，　　能依之德心，",
        "from": "T32n1680_001:0759c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性相二俱融，　　能所初無異。",
        "from": "T32n1680_001:0759c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯善逝德，　　總集如來躬，",
        "from": "T32n1680_001:0759c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離佛相好身，　　餘非所安處。",
        "from": "T32n1680_001:0759c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我因先世福，　　幸遇調御師，",
        "from": "T32n1680_001:0759c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仰讚功德山，　　遠酬尊所記。",
        "from": "T32n1680_001:0759c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情類，　　皆因煩惱持，",
        "from": "T32n1680_001:0759c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛能善除，　　由悲久住世。",
        "from": "T32n1680_001:0759c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誰當先敬禮，　　唯佛大悲尊，",
        "from": "T32n1680_001:0759c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖德超世間，　　悲願處生死。",
        "from": "T32n1680_001:0759c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊居寂靜樂，　　處濁為群生，",
        "from": "T32n1680_001:0759c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永劫久精勤，　　慈心為一切。",
        "from": "T32n1680_001:0759c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從真還利俗，　　由悲所引生，",
        "from": "T32n1680_001:0760a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如呪出潛龍，　　興雲注甘雨。",
        "from": "T32n1680_001:0760a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒居勝定位，　　等觀以怨親，",
        "from": "T32n1680_001:0760a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兇嶮倡聒人，　　投身歸聖德。",
        "from": "T32n1680_001:0760a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通師子吼，　　宣言三界尊，",
        "from": "T32n1680_001:0760a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久已厭名聞，　　由悲自稱讚。",
        "from": "T32n1680_001:0760a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常修利他行，　　曾無自利心，",
        "from": "T32n1680_001:0760a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈念遍眾生，　　於己偏無愛。",
        "from": "T32n1680_001:0760a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲願無邊際，　　逐器化群生，",
        "from": "T32n1680_001:0760a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨處皆饒益，　　猶如散祭食。",
        "from": "T32n1680_001:0760a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深心念一切，　　恒不捨須臾，",
        "from": "T32n1680_001:0760a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利彼反遭辱，　　由咎非佛作。",
        "from": "T32n1680_001:0760a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈音演妙義，　　誠諦非虛說，",
        "from": "T32n1680_001:0760a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣略任機緣，　　半滿隨時轉。",
        "from": "T32n1680_001:0760a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞尊演說，　　孰不歎希奇，",
        "from": "T32n1680_001:0760a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱令懷惡心，　　有智咸歸信。",
        "from": "T32n1680_001:0760a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義詞恒善巧，　　或復出麁言，",
        "from": "T32n1680_001:0760a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利益悉不虛，　　故並成真妙。",
        "from": "T32n1680_001:0760a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "柔軟及麁獷，　　隨事化眾生，",
        "from": "T32n1680_001:0760a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖智無礙心，　　一味皆平等。",
        "from": "T32n1680_001:0760a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝哉無垢業，　　善巧喻良工，",
        "from": "T32n1680_001:0760a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成此微妙身，　　演斯珍寶句。",
        "from": "T32n1680_001:0760a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩者皆歡喜，　　聞說並心開，",
        "from": "T32n1680_001:0760a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "美顏宣妙詞，　　如月流甘露。",
        "from": "T32n1680_001:0760a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈雲灑法雨，　　能清染欲塵，",
        "from": "T32n1680_001:0760a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼金翅王，　　吞滅諸龍毒，",
        "from": "T32n1680_001:0760a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能殄無明闇，　　喻如千日光，",
        "from": "T32n1680_001:0760a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧碎我慢山，　　譬猶天帝杵。",
        "from": "T32n1680_001:0760a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現證非虛謬，　　靜慮除亂心，",
        "from": "T32n1680_001:0760a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實善修行，　　三事皆圓滿。",
        "from": "T32n1680_001:0760b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "創聞佛所說，　　心喜已開明，",
        "from": "T32n1680_001:0760b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此善思惟，　　消除諸垢染。",
        "from": "T32n1680_001:0760b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遭苦能安慰，　　放逸令生怖，",
        "from": "T32n1680_001:0760b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著樂勸厭心，　　隨事皆開誘。",
        "from": "T32n1680_001:0760b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上智證法喜，　　中根勝解生，",
        "from": "T32n1680_001:0760b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淺劣發信心，　　尊言遍饒益。",
        "from": "T32n1680_001:0760b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善拔諸邪見，　　引之趣涅槃，",
        "from": "T32n1680_001:0760b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪垢能洗除，　　由尊降法雨。",
        "from": "T32n1680_001:0760b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切智無礙，　　恒住正念中，",
        "from": "T32n1680_001:0760b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來所記莂，　　一向非虛謬。",
        "from": "T32n1680_001:0760b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無非處非時，　　亦無非器轉，",
        "from": "T32n1680_001:0760b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊言不虛發，　　聞者悉勤修。",
        "from": "T32n1680_001:0760b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一路勝方便，　　無雜可修學，",
        "from": "T32n1680_001:0760b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初中後盡善，　　餘教所皆無。",
        "from": "T32n1680_001:0760b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如斯一向善，　　狂愚起謗心，",
        "from": "T32n1680_001:0760b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此教若生嫌，　　無怨與斯等。",
        "from": "T32n1680_001:0760b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歷劫為群迷，　　備經眾苦毒，",
        "from": "T32n1680_001:0760b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此教縱非善，　　念佛尚應修。",
        "from": "T32n1680_001:0760b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況能大饒益，　　復宣深妙義，",
        "from": "T32n1680_001:0760b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱使頭被焚，　　先應救此教。",
        "from": "T32n1680_001:0760b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自在菩提樂，　　聖德恒淡然，",
        "from": "T32n1680_001:0760b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由此教生，　　證彼亡言處。",
        "from": "T32n1680_001:0760b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世雄真實教，　　邪宗聞悉驚，",
        "from": "T32n1680_001:0760b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王懷惱心，　　人天生勝喜。",
        "from": "T32n1680_001:0760b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地無分別，　　平等普能持，",
        "from": "T32n1680_001:0760b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖教利群生，　　邪正俱蒙益。",
        "from": "T32n1680_001:0760b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫聞佛所說，　　金剛種已成，",
        "from": "T32n1680_001:0760b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱未出樊籠，　　終超死行處。",
        "from": "T32n1680_001:0760b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞法方思義，　　如實善修行，",
        "from": "T32n1680_001:0760c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第三慧圓，　　餘教皆無此。",
        "from": "T32n1680_001:0760c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯獨牛王仙，　　妙契真圓理，",
        "from": "T32n1680_001:0760c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯教不勤修，　　寧有怨過此？",
        "from": "T32n1680_001:0760c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫聞除渴愛，　　邪見信心生，",
        "from": "T32n1680_001:0760c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽者發喜心，　　依斯具淨戒。",
        "from": "T32n1680_001:0760c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誕應時咸喜，　　成長世皆歡，",
        "from": "T32n1680_001:0760c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大化利群生，　　示滅興悲感。",
        "from": "T32n1680_001:0760c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚詠除眾毒，　　憶念招欣慶，",
        "from": "T32n1680_001:0760c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋求發慧明，　　解悟心圓潔。",
        "from": "T32n1680_001:0760c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遇者令尊貴，　　恭侍勝心生，",
        "from": "T32n1680_001:0760c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承事感福因，　　親奉除憂苦。",
        "from": "T32n1680_001:0760c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尸羅具清潔，　　靜慮心澄寂，",
        "from": "T32n1680_001:0760c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若圓智融，　　恒沙福所集。",
        "from": "T32n1680_001:0760c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊容及尊教，　　及尊所證法，",
        "from": "T32n1680_001:0760c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見聞思覺中，　　此寶最殊勝。",
        "from": "T32n1680_001:0760c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漂流作洲渚，　　害己恒為護，",
        "from": "T32n1680_001:0760c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怖者作歸依，　　引之令解脫。",
        "from": "T32n1680_001:0760c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨戒成妙器，　　良田生勝果，",
        "from": "T32n1680_001:0760c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善友能饒益，　　慧命由此成。",
        "from": "T32n1680_001:0760c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行恩及和忍，　　見者咸欣悅，",
        "from": "T32n1680_001:0760c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣集仁慈心，　　功德無邊際。",
        "from": "T32n1680_001:0760c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口無過惡，　　愛敬由之生，",
        "from": "T32n1680_001:0760c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉祥眾義利，　　咸依善逝德。",
        "from": "T32n1680_001:0760c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "導師能善誘，　　墮慢使翹勤，",
        "from": "T32n1680_001:0760c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等持調曲心，　　迷途歸正道。",
        "from": "T32n1680_001:0760c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善根成熟者，　　駕馭以三乘，",
        "from": "T32n1680_001:0760c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "𢤱悷不調人，　　由悲故暫捨。",
        "from": "T32n1680_001:0760c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於遭厄能設，　　安樂勸善修，",
        "from": "T32n1680_001:0760c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲愍苦眾生，　　利樂諸群品。",
        "from": "T32n1680_001:0761a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違害興慈念，　　失行者生憂，",
        "from": "T32n1680_001:0761a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暴虐起悲心，　　聖德無能讚。",
        "from": "T32n1680_001:0761a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩深於罔極，　　舉世所咸知，",
        "from": "T32n1680_001:0761a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此返生怨，　　尊恒起慈愍。",
        "from": "T32n1680_001:0761a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亡身救一切，　　自事不生憂，",
        "from": "T32n1680_001:0761a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸崩墮人，　　親能為援護。",
        "from": "T32n1680_001:0761a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二世行恩造，　　超過諸世間，",
        "from": "T32n1680_001:0761a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於闇常照明，　　尊為慧燈炷。",
        "from": "T32n1680_001:0761a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人天所受用，　　隨類有差殊，",
        "from": "T32n1680_001:0761a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯尊正法味，　　平等無差別。",
        "from": "T32n1680_001:0761a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不觀於氏族，　　色力及年華，",
        "from": "T32n1680_001:0761a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨有善根人，　　求者皆蒙遂。",
        "from": "T32n1680_001:0761a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣現諸希有，　　無緣起大慈，",
        "from": "T32n1680_001:0761a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖眾及人天，　　合掌咸親近。",
        "from": "T32n1680_001:0761a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嗚呼生死畏，　　佛出乃光暉，",
        "from": "T32n1680_001:0761a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "饒益諸眾生，　　皆能滿其願。",
        "from": "T32n1680_001:0761a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡人與共處，　　摧樂取憂危，",
        "from": "T32n1680_001:0761a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謗惱害其身，　　猶如受勝德。",
        "from": "T32n1680_001:0761a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為物行勤苦，　　曾無染著心，",
        "from": "T32n1680_001:0761a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊希有德，　　難以名言說。",
        "from": "T32n1680_001:0761a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊遊嶮惡道，　　馬麥及牛鏘，",
        "from": "T32n1680_001:0761a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦行經六年，　　安受心無退。",
        "from": "T32n1680_001:0761a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊居最勝位，　　悲愍化群生，",
        "from": "T32n1680_001:0761a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱遇輕賤人，　　身語逾謙敬，",
        "from": "T32n1680_001:0761a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或位尊貴主，　　曾無憍慢心，",
        "from": "T32n1680_001:0761a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈己事眾生，　　卑恭如僕使。",
        "from": "T32n1680_001:0761a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "機情億萬種，　　論難百千端，",
        "from": "T32n1680_001:0761a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來慈善音，　　一答疑皆斷。",
        "from": "T32n1680_001:0761a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恩深過覆載，　　背德起深怨，",
        "from": "T32n1680_001:0761b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊觀怨極境，　　猶如極重恩。",
        "from": "T32n1680_001:0761b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨於尊轉害，　　尊於怨轉親，",
        "from": "T32n1680_001:0761b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼恒求佛過，　　佛以彼為恩。",
        "from": "T32n1680_001:0761b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "邪宗妬心請，　　毒飯與火坑，",
        "from": "T32n1680_001:0761b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲願化清池，　　變毒成甘露。",
        "from": "T32n1680_001:0761b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以忍調恚怒，　　真言銷謗毀，",
        "from": "T32n1680_001:0761b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈力伏魔怨，　　正智降邪毒。",
        "from": "T32n1680_001:0761b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群迷從曠劫，　　習惡以性成，",
        "from": "T32n1680_001:0761b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯尊妙行圓，　　一念翻令善。",
        "from": "T32n1680_001:0761b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溫柔降暴虐，　　惠施破慳貪，",
        "from": "T32n1680_001:0761b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善語伏麁言，　　唯尊勝方便。",
        "from": "T32n1680_001:0761b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難提摧巨慢，　　鴦掘起慈心，",
        "from": "T32n1680_001:0761b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難調能善調，　　誰不讚希有？",
        "from": "T32n1680_001:0761b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯尊聖弟子，　　法味自怡神，",
        "from": "T32n1680_001:0761b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草座以為安，　　金床非所貴。",
        "from": "T32n1680_001:0761b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知根欲性，　　攝化任機緣，",
        "from": "T32n1680_001:0761b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有待其請，　　或無問自說。",
        "from": "T32n1680_001:0761b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初陳施戒等，　　漸次淨心生，",
        "from": "T32n1680_001:0761b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後談真實法，　　究竟令圓證。",
        "from": "T32n1680_001:0761b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怖畏漂流處，　　唯佛可歸依，",
        "from": "T32n1680_001:0761b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛大悲尊，　　拯濟諸群品。",
        "from": "T32n1680_001:0761b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身雲遍法界，　　法雨灑塵方，",
        "from": "T32n1680_001:0761b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應現各不同，　　隨機故有異。",
        "from": "T32n1680_001:0761b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善淨無違諍，　　唯尊可承奉，",
        "from": "T32n1680_001:0761b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣利諸人天，　　咸應興供養。",
        "from": "T32n1680_001:0761b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口無起作，　　善化遍群方，",
        "from": "T32n1680_001:0761b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所說妙相應，　　此德唯尊有。",
        "from": "T32n1680_001:0761b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久修三業淨，　　妙瑞現無邊，",
        "from": "T32n1680_001:0761b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普觀諸世間，　　曾無此勝德。",
        "from": "T32n1680_001:0761c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況於極惡者，　　純行最上悲，",
        "from": "T32n1680_001:0761c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣利諸眾生，　　勇猛勤精進。",
        "from": "T32n1680_001:0761c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲聞知法者，　　於尊恒奉事，",
        "from": "T32n1680_001:0761c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使證涅槃，　　終名為負債。",
        "from": "T32n1680_001:0761c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼等諸聖眾，　　為己而修學，",
        "from": "T32n1680_001:0761c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由捨利生心，　　不名還債者。",
        "from": "T32n1680_001:0761c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明睡已覺，　　悲觀遍群方，",
        "from": "T32n1680_001:0761c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "荷負起翹勤，　　聖善宜親近。",
        "from": "T32n1680_001:0761c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔怨興惱害，　　佛力已能除，",
        "from": "T32n1680_001:0761c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏功德中，　　斯但顯少分。",
        "from": "T32n1680_001:0761c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲心化一切，　　聖意絕希求，",
        "from": "T32n1680_001:0761c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "利樂無不施，　　能事斯皆畢。",
        "from": "T32n1680_001:0761c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來勝妙法，　　若或可遷移，",
        "from": "T32n1680_001:0761c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調達與善星，　　不應投此教。",
        "from": "T32n1680_001:0761c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始流轉中，　　互為不饒益，",
        "from": "T32n1680_001:0761c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由斯佛出世，　　開示化眾生。",
        "from": "T32n1680_001:0761c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鹿苑度俱隣，　　堅林化須跋，",
        "from": "T32n1680_001:0761c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此土根緣盡，　　更無餘債牽。",
        "from": "T32n1680_001:0761c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法輪久已轉，　　覺悟諸群迷，",
        "from": "T32n1680_001:0761c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒沙受學人，　　皆能利三有。",
        "from": "T32n1680_001:0761c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以勝金剛定，　　自碎堅牢身，",
        "from": "T32n1680_001:0761c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不捨於大悲，　　自化猶分布。",
        "from": "T32n1680_001:0761c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二利行已滿，　　色法兩身圓，",
        "from": "T32n1680_001:0761c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救攝一闡提，　　雙林顯佛性。",
        "from": "T32n1680_001:0761c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲心貫三有，　　色像應群方，",
        "from": "T32n1680_001:0761c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粟粒以分身，　　爾乃居圓寂。",
        "from": "T32n1680_001:0761c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉奇特行，　　希有功德身，",
        "from": "T32n1680_001:0761c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺諸法門，　　世所未曾有。",
        "from": "T32n1680_001:0761c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流恩遍含識，　　身語恒寂然，",
        "from": "T32n1680_001:0762a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡愚背聖恩，　　於尊興謗怒。",
        "from": "T32n1680_001:0762a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法聚寶藏真無際，　　德源福海實難量，",
        "from": "T32n1680_001:0762a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生曾禮尊，　　禮彼亦名為善禮。",
        "from": "T32n1680_001:0762a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖德神功無有盡，　　我今智劣喻微塵，",
        "from": "T32n1680_001:0762a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲讚如來功德山，　　望崖怯退由斯止。",
        "from": "T32n1680_001:0762a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量無數無邊境，　　難思難見難證理，",
        "from": "T32n1680_001:0762a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛聖智獨了知，　　豈是凡愚所能讚。",
        "from": "T32n1680_001:0762a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一毫一相充法界，　　一行一德遍心源，",
        "from": "T32n1680_001:0762a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨廣大喻芳池，　　能療眾生煩惱渴。",
        "from": "T32n1680_001:0762a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我讚牟尼功德海，　　憑斯善業趣菩提，",
        "from": "T32n1680_001:0762a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普願含生發勝心，　　永離凡愚虛妄識。",
        "from": "T32n1680_001:0762a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一百五十讚佛頌",
        "from": "T32n1680_001:0762a13_100",
        "context_with_next_sentence": false
    }
]