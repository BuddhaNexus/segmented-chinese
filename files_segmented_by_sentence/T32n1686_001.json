[
    {
        "source_sentence": "賢聖集伽陀一百頌",
        "from": "T32n1686_001:0773b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚",
        "from": "T32n1686_001:0773b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少卿明教大師臣天息災奉　詔譯",
        "from": "T32n1686_001:0773b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首一切出世間，　　三界最尊功德海，",
        "from": "T32n1686_001:0773b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智火能燒煩惱垢，　　正覺我今歸命禮。",
        "from": "T32n1686_001:0773b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首能拔生死嶮，　　普竭憂惱貪癡海，",
        "from": "T32n1686_001:0773b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破彼塵勞罪業山，　　我今歸禮妙法寶。",
        "from": "T32n1686_001:0773b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首一切佛稱讚，　　八聖道行作莊嚴，",
        "from": "T32n1686_001:0773b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無為禪定漸圓明，　　我今歸禮聖眾寶。",
        "from": "T32n1686_001:0773b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內宮寶藏諸樓閣，　　金玉摩尼種種光，",
        "from": "T32n1686_001:0773b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真珠瓔珞廣莊嚴，　　百千天人恒遊履，",
        "from": "T32n1686_001:0773b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得安居天界中，　　修嚴佛寺獲斯報。",
        "from": "T32n1686_001:0773b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信心歸敬於三寶，　　給施財帛精舍中，",
        "from": "T32n1686_001:0773b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受彼人天快樂已，　　當得涅盤寂滅果。",
        "from": "T32n1686_001:0773c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精舍年深多摧壞，　　重修嚴飾供佛僧，",
        "from": "T32n1686_001:0773c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常獲快樂住人天，　　亦得涅槃寂滅果。",
        "from": "T32n1686_001:0773c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於精舍施園林，　　座具衣服湯藥等，",
        "from": "T32n1686_001:0773c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復遇惡世飢難時，　　施彼眾生飲食物，",
        "from": "T32n1686_001:0773c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是而獲無邊福，　　及得智者七聖財，",
        "from": "T32n1686_001:0773c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消除一切惡道苦，　　永受大富無窮盡。",
        "from": "T32n1686_001:0773c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來行住處，　　若人到已生恭敬，",
        "from": "T32n1686_001:0773c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承事供養兼聞法，　　深信修學依戒行，",
        "from": "T32n1686_001:0773c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當獲廣大無邊果，　　譬如大海渺渺深，",
        "from": "T32n1686_001:0773c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以器較量算不及，　　福德因緣亦如是。",
        "from": "T32n1686_001:0773c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人修建於佛殿，　　寒熱風雨不能侵，",
        "from": "T32n1686_001:0773c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最先獲證寂滅法，　　圓滿一切隨意願。",
        "from": "T32n1686_001:0773c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人塑畫於佛像，　　憂惱疾病得解脫，",
        "from": "T32n1686_001:0773c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得生天勝妙身，　　大智吉祥及尊貴。",
        "from": "T32n1686_001:0773c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人重修於佛像，　　當得堅牢無病身，",
        "from": "T32n1686_001:0773c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長壽色力諸相圓，　　後得涅盤寂靜樂，",
        "from": "T32n1686_001:0773c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂惱諍訟皆滅除，　　勇猛辯才人稱讚，",
        "from": "T32n1686_001:0773c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏諸根而策勤，　　一切莊嚴眾所敬。",
        "from": "T32n1686_001:0773c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人修諸佛像等，　　遠離過失得生天，",
        "from": "T32n1686_001:0773c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴端嚴眾所欽，　　一切福德皆具足。",
        "from": "T32n1686_001:0773c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破損塔廟若重修，　　彼人無病身圓滿，",
        "from": "T32n1686_001:0773c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間可愛果，　　種種隨心皆具足。",
        "from": "T32n1686_001:0773c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若造佛像及佛塔，　　形量至小如麥粒，",
        "from": "T32n1686_001:0773c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不唯天上與人間，　　決定為王受快樂，",
        "from": "T32n1686_001:0773c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有色無色生亦爾，　　富貴無邊不可量，",
        "from": "T32n1686_001:0773c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當離生老病死苦，　　究竟菩提佛果圓。",
        "from": "T32n1686_001:0773c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於塔廟安舍利，　　及畫佛像而供養，",
        "from": "T32n1686_001:0773c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得彼智光極大地，　　善逝淨妙佛富貴，",
        "from": "T32n1686_001:0773c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安住無邊眾生界，　　同入平等無相性。",
        "from": "T32n1686_001:0774a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於寂靜山峯上，　　安置佛塔及相輪，",
        "from": "T32n1686_001:0774a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形量可如指節許，　　當生一切人天中，",
        "from": "T32n1686_001:0774a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "端嚴大富色力安，　　後作三十三天子。",
        "from": "T32n1686_001:0774a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人以手開佛塔，　　當獲富貴及具足，",
        "from": "T32n1686_001:0774a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體光潔心柔軟，　　多知性淨無瞋恨。",
        "from": "T32n1686_001:0774a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有智者行檀度，　　施佛塗香及白檀，",
        "from": "T32n1686_001:0774a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭俱摩等種種香，　　當獲廣大可愛果。",
        "from": "T32n1686_001:0774a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人信佛生歡喜，　　持妙香花及音樂，",
        "from": "T32n1686_001:0774a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種供養佛如來，　　生天而感金寶池，",
        "from": "T32n1686_001:0774a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以彼池蓮細香蘂，　　遍身霑惹而澡浴，",
        "from": "T32n1686_001:0774a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曼那吉儞水清淨，　　入者塵垢自然除，",
        "from": "T32n1686_001:0774a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波濤流湧噴香冷，　　寶岸紅蓮周匝開，",
        "from": "T32n1686_001:0774a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天等覩斯恒適意，　　給施佛僧得此報。",
        "from": "T32n1686_001:0774a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是功德不可量，　　是故諸經結頌讚。",
        "from": "T32n1686_001:0774a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名衣及上服，　　施佛及施僧，",
        "from": "T32n1686_001:0774a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後生天界時，　　最上天衣香，",
        "from": "T32n1686_001:0774a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青黃種種色，　　百千摩尼寶，",
        "from": "T32n1686_001:0774a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而用作莊嚴，　　富貴而無量，",
        "from": "T32n1686_001:0774a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "快樂亦無邊，　　獲斯勝妙果。",
        "from": "T32n1686_001:0774a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人生世間，　　而得作國王，",
        "from": "T32n1686_001:0774a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足諸色相，　　上妙繒綵衣，",
        "from": "T32n1686_001:0774a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種殊勝香，　　隨身恒受用，",
        "from": "T32n1686_001:0774a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆因施佛衣，　　成就如斯報。",
        "from": "T32n1686_001:0774a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有生天界，　　種種寶莊嚴，",
        "from": "T32n1686_001:0774a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身挂珠瓔珞，　　頭戴寶玉冠，",
        "from": "T32n1686_001:0774a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳鐶及腕釧，　　如是富快樂，",
        "from": "T32n1686_001:0774a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施佛莊嚴具，　　獲天勝妙果。",
        "from": "T32n1686_001:0774a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作大國王，　　身相廣嚴飾，",
        "from": "T32n1686_001:0774a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞摩尼珠，　　玎璫聲響亮，",
        "from": "T32n1686_001:0774b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是三寶田，　　布施莊嚴具。",
        "from": "T32n1686_001:0774b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者清淨心，　　施佛花鬘等，",
        "from": "T32n1686_001:0774b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天上及人間，　　恒獲於快樂，",
        "from": "T32n1686_001:0774b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就七覺花，　　復生天山地，",
        "from": "T32n1686_001:0774b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而為帝釋主，　　與彼諸眷屬，",
        "from": "T32n1686_001:0774b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊嬉於園林，　　種種花供養，",
        "from": "T32n1686_001:0774b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而獲如是果。",
        "from": "T32n1686_001:0774b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金銀青綠等，　　莊嚴於繖蓋，",
        "from": "T32n1686_001:0774b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "團圓如滿月，　　若王若大臣，",
        "from": "T32n1686_001:0774b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而用覆頭頂。",
        "from": "T32n1686_001:0774b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施蓋獲斯報，　　解脫貪憂惱，",
        "from": "T32n1686_001:0774b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無病恒安樂，　　復作世間王，",
        "from": "T32n1686_001:0774b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是施蓋報。",
        "from": "T32n1686_001:0774b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施於幢幡，　　當作天輪王，",
        "from": "T32n1686_001:0774b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世上無能勝，　　遠離一切罪，",
        "from": "T32n1686_001:0774b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸眾生中，　　而為於上首，",
        "from": "T32n1686_001:0774b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒得人供養。",
        "from": "T32n1686_001:0774b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施鈴鐸等，　　不生罪惡地，",
        "from": "T32n1686_001:0774b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得梵音聲。",
        "from": "T32n1686_001:0774b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "琴瑟鼓吹等，　　供養佛聖賢，",
        "from": "T32n1686_001:0774b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令聞心適悅，　　當獲天耳根，",
        "from": "T32n1686_001:0774b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴常清淨，　　復得金剛慧，",
        "from": "T32n1686_001:0774b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧壞煩惱山。",
        "from": "T32n1686_001:0774b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以妙色香味，　　種種美飲食，",
        "from": "T32n1686_001:0774b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養諸佛等，　　當生天界中，",
        "from": "T32n1686_001:0774b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眷屬同寶座，　　以摩尼寶器，",
        "from": "T32n1686_001:0774b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食天上妙饌，　　飢饉刀兵劫，",
        "from": "T32n1686_001:0774b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不生其中。",
        "from": "T32n1686_001:0774c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養聖賢眾，　　當生人天中，",
        "from": "T32n1686_001:0774c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "美食常豐足，　　種種而最上，",
        "from": "T32n1686_001:0774c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者恒敬愛。",
        "from": "T32n1686_001:0774c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施彼出家者，　　常獲富樂身，",
        "from": "T32n1686_001:0774c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯才而長壽，　　色力相具足，",
        "from": "T32n1686_001:0774c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施食報如是。",
        "from": "T32n1686_001:0774c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施彼甘蜜水，　　酥乳酪漿等，",
        "from": "T32n1686_001:0774c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼渴乏者，　　飲之獲安樂，",
        "from": "T32n1686_001:0774c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦得如前報。",
        "from": "T32n1686_001:0774c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "林藤諸藥草，　　供施於聖賢，",
        "from": "T32n1686_001:0774c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生人天中，　　無病而長壽，",
        "from": "T32n1686_001:0774c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒獲身安樂。",
        "from": "T32n1686_001:0774c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後得生天宮，　　劫樹花芳盛，",
        "from": "T32n1686_001:0774c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求隨意得，　　寶器酒蜜等，",
        "from": "T32n1686_001:0774c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眷屬同所飲。",
        "from": "T32n1686_001:0774c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能出莊嚴具，　　妓唱天樂等，",
        "from": "T32n1686_001:0774c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悅樂天眾心，　　甘露復隨身，",
        "from": "T32n1686_001:0774c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施飲獲斯報。",
        "from": "T32n1686_001:0774c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得生人天，　　遠離於貧寒，",
        "from": "T32n1686_001:0774c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長命足財寶。",
        "from": "T32n1686_001:0774c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "車乘及輦輿，　　供施佛如來，",
        "from": "T32n1686_001:0774c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得大神通。",
        "from": "T32n1686_001:0774c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒生上族家，　　常有象馬車，",
        "from": "T32n1686_001:0774c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離貧辛苦。",
        "from": "T32n1686_001:0774c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人懃承事，　　當於一切處，",
        "from": "T32n1686_001:0774c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求皆成就。",
        "from": "T32n1686_001:0774c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生於天上，　　不受苦辛勤，",
        "from": "T32n1686_001:0774c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常坐上妙座。",
        "from": "T32n1686_001:0774c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生天恒快樂，　　身相廣端直，",
        "from": "T32n1686_001:0775a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無畏人稱讚。",
        "from": "T32n1686_001:0775a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴飾諸屋宅，　　施人令遊止，",
        "from": "T32n1686_001:0775a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心生適悅，　　當招歡喜園，",
        "from": "T32n1686_001:0775a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天人遊行處，　　與諸天女等，",
        "from": "T32n1686_001:0775a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嬉戲受快樂。",
        "from": "T32n1686_001:0775a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作陰涼施，　　當感優曇鉢，",
        "from": "T32n1686_001:0775a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼俱菩提樹，　　復後得生天，",
        "from": "T32n1686_001:0775a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒受五欲樂。",
        "from": "T32n1686_001:0775a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修飾令嚴淨，　　濟彼渴乏人，",
        "from": "T32n1686_001:0775a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普皆令充足，　　後報得生天，",
        "from": "T32n1686_001:0775a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或生於梵世，　　種種受快樂，",
        "from": "T32n1686_001:0775a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復證寂滅果。",
        "from": "T32n1686_001:0775a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施於三寶，　　當生一切處，",
        "from": "T32n1686_001:0775a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴而快樂，　　於彼世間中，",
        "from": "T32n1686_001:0775a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊高德最上，　　復感諸眾生，",
        "from": "T32n1686_001:0775a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒時而供養。",
        "from": "T32n1686_001:0775a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得生天上，　　智慧極聰利，",
        "from": "T32n1686_001:0775a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不值刀兵。",
        "from": "T32n1686_001:0775a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧恒猛利，　　能斷諸煩惱，",
        "from": "T32n1686_001:0775a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證彼寂靜道。",
        "from": "T32n1686_001:0775a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塑畫於佛像，　　生於天界中，",
        "from": "T32n1686_001:0775a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體真金色，　　清淨光如日，",
        "from": "T32n1686_001:0775a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而諸天人眾，　　天男及天女，",
        "from": "T32n1686_001:0775a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒時而歸命。",
        "from": "T32n1686_001:0775a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善能說法施，　　天上人間生，",
        "from": "T32n1686_001:0775a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智德力具足，　　恒受於快樂，",
        "from": "T32n1686_001:0775a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離憂悲苦，　　於其後有身，",
        "from": "T32n1686_001:0775a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得證寂滅道。",
        "from": "T32n1686_001:0775a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫妙法寶，　　當得宿命智，",
        "from": "T32n1686_001:0775b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴恒安樂，　　而滅一切罪，",
        "from": "T32n1686_001:0775b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經彼俱胝劫，　　不墮於地獄，",
        "from": "T32n1686_001:0775b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及與鬼畜生。",
        "from": "T32n1686_001:0775b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掃灑結壇場，　　旋繞散香花，",
        "from": "T32n1686_001:0775b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒時而供養，　　後生於人間，",
        "from": "T32n1686_001:0775b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及生於天上，　　恒受於富貴，",
        "from": "T32n1686_001:0775b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復證寂滅故。",
        "from": "T32n1686_001:0775b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養佛賢聖，　　生彼人天中，",
        "from": "T32n1686_001:0775b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三眼常清淨，　　慧眼與天眼，",
        "from": "T32n1686_001:0775b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及於肉眼故。",
        "from": "T32n1686_001:0775b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常得生天上，　　口亦不瘖瘂，",
        "from": "T32n1686_001:0775b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳眼無聾眇。",
        "from": "T32n1686_001:0775b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非唯三眼淨，　　能於正覺法，",
        "from": "T32n1686_001:0775b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切悉通達。",
        "from": "T32n1686_001:0775b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養有德眾，　　沙門婆羅門，",
        "from": "T32n1686_001:0775b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少施獲多報，　　廣得順道財，",
        "from": "T32n1686_001:0775b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長時而受用。",
        "from": "T32n1686_001:0775b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食施畜生類，　　所獲於福德，",
        "from": "T32n1686_001:0775b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成於百倍。",
        "from": "T32n1686_001:0775b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布施於罪人，　　功利漸加殊，",
        "from": "T32n1686_001:0775b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲福成千倍。",
        "from": "T32n1686_001:0775b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福獲千百倍，　　供養無心人，",
        "from": "T32n1686_001:0775b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得益百俱胝。",
        "from": "T32n1686_001:0775b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼無學者，　　所獲於福德，",
        "from": "T32n1686_001:0775b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比前而最上。",
        "from": "T32n1686_001:0775b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生於天上，　　大富永不斷，",
        "from": "T32n1686_001:0775b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒受於快樂，　　乃至盡輪迴，",
        "from": "T32n1686_001:0775b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而證寂滅法。",
        "from": "T32n1686_001:0775b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說伽陀經，　　略明於福報，",
        "from": "T32n1686_001:0775c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普令生信受。",
        "from": "T32n1686_001:0775c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉祥照大地，　　夜分滿月輝，",
        "from": "T32n1686_001:0775c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能開青蓮花；",
        "from": "T32n1686_001:0775c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "帝釋那羅延，　　上首諸天等，",
        "from": "T32n1686_001:0775c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱因行施得。",
        "from": "T32n1686_001:0775c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下普皆照，　　能活諸物命，",
        "from": "T32n1686_001:0775c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時至亦無常。",
        "from": "T32n1686_001:0775c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并及諸天眾，　　福壽窮盡時，",
        "from": "T32n1686_001:0775c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而入死冤口，　　憂悲苦惱火，",
        "from": "T32n1686_001:0775c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不住被焚燒。",
        "from": "T32n1686_001:0775c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察無常身，　　遠離欲渴心，",
        "from": "T32n1686_001:0775c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿耽人天樂，　　須臾不久長，",
        "from": "T32n1686_001:0775c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆歸於散壞。",
        "from": "T32n1686_001:0775c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨離虛幻樂，　　常詣於佛前，",
        "from": "T32n1686_001:0775c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌而親近，　　以自大菩提，",
        "from": "T32n1686_001:0775c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作解脫主。",
        "from": "T32n1686_001:0775c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "賢聖集伽陀一百頌",
        "from": "T32n1686_001:0775c18_100",
        "context_with_next_sentence": false
    }
]