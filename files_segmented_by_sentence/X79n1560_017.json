{
    "X79n1560_017:0526a18_0": "禪林僧寶傳卷第十七",
    "X79n1560_017:0526a20_0": "宋明白庵居沙門　惠洪　撰",
    "X79n1560_017:0526a21_0": "浮山遠禪師",
    "X79n1560_017:0526a22_0": "禪師名法遠。",
    "X79n1560_017:0526a22_1": "鄭圃田人也。",
    "X79n1560_017:0526a22_2": "出于王氏。",
    "X79n1560_017:0526a22_3": "年十九。",
    "X79n1560_017:0526a22_4": "游并州。",
    "X79n1560_017:0526a23_0": "見三交嵩禪師。",
    "X79n1560_017:0526a23_1": "求出世法。",
    "X79n1560_017:0526a23_2": "嵩曰。",
    "X79n1560_017:0526a23_3": "汝當剃落。",
    "X79n1560_017:0526a23_4": "墮三寶數。",
    "X79n1560_017:0526a24_0": "乃可受法。",
    "X79n1560_017:0526a24_1": "遠曰。",
    "X79n1560_017:0526a24_2": "法有僧俗乎。",
    "X79n1560_017:0526a24_3": "嵩曰。",
    "X79n1560_017:0526a24_4": "與其為俗。",
    "X79n1560_017:0526a24_5": "曷若為僧。",
    "X79n1560_017:0526b01_6": "僧則能續佛壽命故也。",
    "X79n1560_017:0526b01_7": "於是斷髮。",
    "X79n1560_017:0526b01_8": "受具足戒。",
    "X79n1560_017:0526b01_9": "謁汾州昭公。",
    "X79n1560_017:0526b02_10": "又謁汝海省公。",
    "X79n1560_017:0526b02_11": "皆受記莂。",
    "X79n1560_017:0526b02_12": "天禧中。",
    "X79n1560_017:0526b02_13": "游襄漢隋郢。",
    "X79n1560_017:0526b03_14": "至大陽。",
    "X79n1560_017:0526b03_15": "機語與明安延公相契。",
    "X79n1560_017:0526b03_16": "延嘆曰。",
    "X79n1560_017:0526b03_17": "吾老矣。",
    "X79n1560_017:0526b03_18": "洞上一宗。",
    "X79n1560_017:0526b04_19": "遂竟無人耶。",
    "X79n1560_017:0526b04_20": "以平生所著直裰皮履。",
    "X79n1560_017:0526b04_21": "示之。",
    "X79n1560_017:0526b04_22": "遠曰。",
    "X79n1560_017:0526b05_23": "當為持此衣履。",
    "X79n1560_017:0526b05_24": "求人付之如何。",
    "X79n1560_017:0526b05_25": "延許之曰。",
    "X79n1560_017:0526b05_26": "他日果得人。",
    "X79n1560_017:0526b06_27": "出吾偈為證。",
    "X79n1560_017:0526b06_28": "偈曰。",
    "X79n1560_017:0526b06_29": "楊廣山前草。",
    "X79n1560_017:0526b06_30": "憑君待價焞。",
    "X79n1560_017:0526b06_31": "異苗翻茂處。",
    "X79n1560_017:0526b07_32": "深密固靈根。",
    "X79n1560_017:0526b07_33": "其尾云。",
    "X79n1560_017:0526b07_34": "得法者。",
    "X79n1560_017:0526b07_35": "潛眾十年。",
    "X79n1560_017:0526b07_36": "方可闡揚。",
    "X79n1560_017:0526b08_37": "遠拜受辭去。",
    "X79n1560_017:0526b08_38": "依滁州瑯瑘覺禪師。",
    "X79n1560_017:0526b08_39": "應舒州太平興國寺請。",
    "X79n1560_017:0526b09_40": "說法為省公之嗣。",
    "X79n1560_017:0526b09_41": "次住姑蘇天平山。",
    "X79n1560_017:0526b09_42": "又住浮山。",
    "X79n1560_017:0526b10_43": "既老退休於會聖岩。",
    "X79n1560_017:0526b10_44": "因閱班固九流。",
    "X79n1560_017:0526b10_45": "遂擬之作九帶。",
    "X79n1560_017:0526b11_46": "敘佛祖教義。",
    "X79n1560_017:0526b11_47": "博採先德機語。",
    "X79n1560_017:0526b11_48": "參同印證。",
    "X79n1560_017:0526b11_49": "其一曰。",
    "X79n1560_017:0526b12_50": "佛正法眼帶。",
    "X79n1560_017:0526b12_51": "其二曰。",
    "X79n1560_017:0526b12_52": "佛法藏帶。",
    "X79n1560_017:0526b12_53": "其三曰。",
    "X79n1560_017:0526b12_54": "理貫帶。",
    "X79n1560_017:0526b12_55": "其四曰。",
    "X79n1560_017:0526b13_56": "事貫帶。",
    "X79n1560_017:0526b13_57": "其五曰理事縱橫帶。",
    "X79n1560_017:0526b13_58": "其六曰屈曲帶。",
    "X79n1560_017:0526b13_59": "其七曰妙挾兼帶。",
    "X79n1560_017:0526b14_60": "其八曰金鍼雙鏁帶。",
    "X79n1560_017:0526b14_61": "其九曰。",
    "X79n1560_017:0526b14_62": "平懷常實帶。",
    "X79n1560_017:0526b15_63": "學者既已傳誦。",
    "X79n1560_017:0526b15_64": "遠曰。",
    "X79n1560_017:0526b15_65": "若據圓極法門。",
    "X79n1560_017:0526b15_66": "本具十數。",
    "X79n1560_017:0526b16_0": "今此九帶。",
    "X79n1560_017:0526b16_1": "已為諸人說了。",
    "X79n1560_017:0526b16_2": "更有一帶。",
    "X79n1560_017:0526b16_3": "還見得麼。",
    "X79n1560_017:0526b16_4": "若也見得親切分明。",
    "X79n1560_017:0526b17_5": "却請出來。",
    "X79n1560_017:0526b17_6": "說看。",
    "X79n1560_017:0526b17_7": "說得分明。",
    "X79n1560_017:0526b17_8": "許汝通前九帶圓明道眼。",
    "X79n1560_017:0526b18_9": "若見不親切。",
    "X79n1560_017:0526b18_10": "說不相應。",
    "X79n1560_017:0526b18_11": "唯依吾語。",
    "X79n1560_017:0526b18_12": "而為己解。",
    "X79n1560_017:0526b19_13": "則名謗法。",
    "X79n1560_017:0526b19_14": "大眾到此如何。",
    "X79n1560_017:0526b19_15": "眾無語。",
    "X79n1560_017:0526b19_16": "遠叱去之。",
    "X79n1560_017:0526b20_0": "舉僧問夾山。",
    "X79n1560_017:0526b20_1": "如何是夾山境。",
    "X79n1560_017:0526b20_2": "答曰猿抱子歸青嶂後。",
    "X79n1560_017:0526b21_0": "鳥銜花落碧岩前。",
    "X79n1560_017:0526b21_1": "法眼曰。",
    "X79n1560_017:0526b21_2": "我二十年來。",
    "X79n1560_017:0526b21_3": "將作境語會。",
    "X79n1560_017:0526b22_0": "遠曰不作境會。",
    "X79n1560_017:0526b22_1": "作麼生會。",
    "X79n1560_017:0526b22_2": "僧曰。",
    "X79n1560_017:0526b22_3": "師意如何。",
    "X79n1560_017:0526b22_4": "曰。",
    "X79n1560_017:0526b22_5": "犀因玩月文生角。",
    "X79n1560_017:0526b23_6": "象被雷驚花入牙(或遠云。",
    "X79n1560_017:0526b23_7": "直饒不作境語會。",
    "X79n1560_017:0526b23_8": "亦未會在。",
    "X79n1560_017:0526b23_9": "何謂也云犀因玩月文生角。",
    "X79n1560_017:0526b24_10": "象被雷驚花入牙也)。",
    "X79n1560_017:0526b24_11": "遠玉骨插額。",
    "X79n1560_017:0526b24_12": "目光外射。",
    "X79n1560_017:0526b24_13": "狀如王孫。",
    "X79n1560_017:0526c01_14": "凜然可畏。",
    "X79n1560_017:0526c01_15": "初歐陽文忠公。",
    "X79n1560_017:0526c01_16": "聞遠奇逸。",
    "X79n1560_017:0526c01_17": "造其室。",
    "X79n1560_017:0526c01_18": "未有以異之。",
    "X79n1560_017:0526c02_19": "與客棊。",
    "X79n1560_017:0526c02_20": "遠坐其旁。",
    "X79n1560_017:0526c02_21": "文忠収局。",
    "X79n1560_017:0526c02_22": "請遠因棊說法。",
    "X79n1560_017:0526c03_0": "乃鳴鼓升座曰。",
    "X79n1560_017:0526c03_1": "若論此事。",
    "X79n1560_017:0526c03_2": "如兩家著棊相似。",
    "X79n1560_017:0526c03_3": "何謂也。",
    "X79n1560_017:0526c04_0": "敵手知音當機不讓。",
    "X79n1560_017:0526c04_1": "若是綴五饒三。",
    "X79n1560_017:0526c04_2": "又通一路始得。",
    "X79n1560_017:0526c05_0": "有一般底。",
    "X79n1560_017:0526c05_1": "只解閉門作活。",
    "X79n1560_017:0526c05_2": "不會奪角沖關。",
    "X79n1560_017:0526c05_3": "硬節與虎口齊彰。",
    "X79n1560_017:0526c06_4": "局破後徒勞逴斡。",
    "X79n1560_017:0526c06_5": "所以道。",
    "X79n1560_017:0526c06_6": "肥邊易得。",
    "X79n1560_017:0526c06_7": "瘦肚難求思。",
    "X79n1560_017:0526c07_8": "行則往往失黏。",
    "X79n1560_017:0526c07_9": "心粗而時時頭撞。",
    "X79n1560_017:0526c07_10": "休誇國手。",
    "X79n1560_017:0526c07_11": "謾說神仙。",
    "X79n1560_017:0526c08_12": "贏局輸籌即不問。",
    "X79n1560_017:0526c08_13": "且道黑白未分時一著。",
    "X79n1560_017:0526c08_14": "落在什麼處。",
    "X79n1560_017:0526c09_15": "良久曰。",
    "X79n1560_017:0526c09_16": "從前十九路。",
    "X79n1560_017:0526c09_17": "迷悟幾多人。",
    "X79n1560_017:0526c09_18": "文忠嘉歎久之。",
    "X79n1560_017:0526c10_19": "遠偈語妙密。",
    "X79n1560_017:0526c10_20": "諸方服其工作。",
    "X79n1560_017:0526c10_21": "三交嵩公贊曰。",
    "X79n1560_017:0526c11_0": "黃金打作鍮石箸。",
    "X79n1560_017:0526c11_1": "白玉碾成象牙梳。",
    "X79n1560_017:0526c11_2": "千手大悲拈不動。",
    "X79n1560_017:0526c12_3": "無言童子暗嗟吁。",
    "X79n1560_017:0526c12_4": "又作明安延公贊。",
    "X79n1560_017:0526c12_5": "曰。",
    "X79n1560_017:0526c12_6": "黑狗爛銀蹄。",
    "X79n1560_017:0526c13_7": "白象崑崙騎。",
    "X79n1560_017:0526c13_8": "於斯二無礙。",
    "X79n1560_017:0526c13_9": "木馬火中嘶。",
    "X79n1560_017:0526c13_10": "遠雅自稱柴石野人。",
    "X79n1560_017:0526c14_11": "歿時已七十餘。",
    "X79n1560_017:0526c14_12": "少時與達觀頴公。",
    "X79n1560_017:0526c14_13": "薛大頭七八輩游蜀。",
    "X79n1560_017:0526c15_14": "幾遭橫逆。",
    "X79n1560_017:0526c15_15": "遠以智脫之。",
    "X79n1560_017:0526c15_16": "眾以其曉吏事。",
    "X79n1560_017:0526c16_0": "號遠錄公。",
    "X79n1560_017:0526c17_0": "投子青禪師",
    "X79n1560_017:0526c18_0": "禪師名義青。",
    "X79n1560_017:0526c18_1": "本青杜人。",
    "X79n1560_017:0526c18_2": "李氏子也。",
    "X79n1560_017:0526c18_3": "七齡頴異。",
    "X79n1560_017:0526c18_4": "去妙相寺出家。",
    "X79n1560_017:0526c19_5": "十五試法華經。",
    "X79n1560_017:0526c19_6": "得度為大僧。",
    "X79n1560_017:0526c19_7": "其師使習百法論。",
    "X79n1560_017:0526c20_8": "歎曰。",
    "X79n1560_017:0526c20_9": "三祗塗遠。",
    "X79n1560_017:0526c20_10": "自困何益哉。",
    "X79n1560_017:0526c20_11": "入洛中聽華嚴五年。",
    "X79n1560_017:0526c21_0": "反觀文字。",
    "X79n1560_017:0526c21_1": "一切如肉受串。",
    "X79n1560_017:0526c21_2": "處處同其義味。",
    "X79n1560_017:0526c21_3": "甞講至諸林(或作楮林)菩薩偈曰。",
    "X79n1560_017:0526c22_4": "即心自性。",
    "X79n1560_017:0526c22_5": "忽猛省曰。",
    "X79n1560_017:0526c22_6": "法離文字。",
    "X79n1560_017:0526c22_7": "寧可講乎。",
    "X79n1560_017:0526c23_8": "即棄去游方。",
    "X79n1560_017:0526c23_9": "至浮山。",
    "X79n1560_017:0526c23_10": "時圓鑒遠禪師退席。",
    "X79n1560_017:0526c23_11": "居會聖岩。",
    "X79n1560_017:0526c24_12": "遠夢得俊鷹畜之。",
    "X79n1560_017:0526c24_13": "既覺而青適至。",
    "X79n1560_017:0526c24_14": "遠以為吉徵。",
    "X79n1560_017:0527a01_15": "加意延禮之。",
    "X79n1560_017:0527a01_16": "留止三年。",
    "X79n1560_017:0527a01_17": "遠問曰。",
    "X79n1560_017:0527a01_18": "外道問佛。",
    "X79n1560_017:0527a01_19": "不問有言。",
    "X79n1560_017:0527a02_20": "不問無言時如何。",
    "X79n1560_017:0527a02_21": "世尊默然。",
    "X79n1560_017:0527a02_22": "汝如何會。",
    "X79n1560_017:0527a02_23": "青擬進語。",
    "X79n1560_017:0527a03_0": "遠驀以手掩其口。",
    "X79n1560_017:0527a03_1": "於是青開悟。",
    "X79n1560_017:0527a03_2": "拜起。",
    "X79n1560_017:0527a03_3": "遠曰。",
    "X79n1560_017:0527a03_4": "汝妙悟元機耶。",
    "X79n1560_017:0527a04_5": "對曰。",
    "X79n1560_017:0527a04_6": "設有妙悟。",
    "X79n1560_017:0527a04_7": "也須吐却。",
    "X79n1560_017:0527a04_8": "時有資侍者在旁曰。",
    "X79n1560_017:0527a05_0": "青華嚴今日。",
    "X79n1560_017:0527a05_1": "如病得汗。",
    "X79n1560_017:0527a05_2": "青回顧曰。",
    "X79n1560_017:0527a05_3": "合取狗口。",
    "X79n1560_017:0527a05_4": "汝更忉忉。",
    "X79n1560_017:0527a06_5": "我即便嘔。",
    "X79n1560_017:0527a06_6": "服勤又三年。",
    "X79n1560_017:0527a06_7": "圓鑒以大陽皮履布直裰付之曰。",
    "X79n1560_017:0527a07_8": "代吾續洞上之風。",
    "X79n1560_017:0527a07_9": "吾住世非久。",
    "X79n1560_017:0527a07_10": "善自護持。",
    "X79n1560_017:0527a07_11": "無留此間。",
    "X79n1560_017:0527a08_12": "青遂辭出山。",
    "X79n1560_017:0527a08_13": "閱大藏於廬山慧日寺。",
    "X79n1560_017:0527a08_14": "熈甯六年還龍舒。",
    "X79n1560_017:0527a09_15": "道俗請住白雲山海會寺。",
    "X79n1560_017:0527a09_16": "計其得法之歲。",
    "X79n1560_017:0527a10_0": "至此適幾十年。",
    "X79n1560_017:0527a10_1": "又八年移住投子山。",
    "X79n1560_017:0527a10_2": "道望日遠禪者日增。",
    "X79n1560_017:0527a11_3": "潛通暗證者比比有之。",
    "X79n1560_017:0527a11_4": "異苗翻茂。",
    "X79n1560_017:0527a11_5": "果符前讖。",
    "X79n1560_017:0527a11_6": "青平生不畜長物。",
    "X79n1560_017:0527a12_7": "弊衲楮衾而已。",
    "X79n1560_017:0527a12_8": "初開山慈濟有記曰。",
    "X79n1560_017:0527a13_0": "吾塔若紅。",
    "X79n1560_017:0527a13_1": "是吾再來。",
    "X79n1560_017:0527a13_2": "邦人偶修飾其塔。",
    "X79n1560_017:0527a13_3": "作瑪瑙色。",
    "X79n1560_017:0527a13_4": "未幾而青領院事。",
    "X79n1560_017:0527a14_5": "山中素無水。",
    "X79n1560_017:0527a14_6": "眾每以為病。",
    "X79n1560_017:0527a14_7": "忽有泉出山石間。",
    "X79n1560_017:0527a15_8": "甘凉清潔。",
    "X79n1560_017:0527a15_9": "郡守賀公。",
    "X79n1560_017:0527a15_10": "名為再來泉。",
    "X79n1560_017:0527a15_11": "元豐六年四月末。",
    "X79n1560_017:0527a16_12": "示微疾。",
    "X79n1560_017:0527a16_13": "以書辭郡官諸檀越。",
    "X79n1560_017:0527a16_14": "五月四日。",
    "X79n1560_017:0527a16_15": "盥沐升座。",
    "X79n1560_017:0527a17_16": "別眾罷。",
    "X79n1560_017:0527a17_17": "寫偈曰。",
    "X79n1560_017:0527a17_18": "兩處住持無可助道。",
    "X79n1560_017:0527a17_19": "珍重諸人不須尋討。",
    "X79n1560_017:0527a18_20": "遂泊然而化。",
    "X79n1560_017:0527a18_21": "闍維収舍利靈骨。",
    "X79n1560_017:0527a18_22": "以閏六月。",
    "X79n1560_017:0527a19_0": "塔于寺之西北。",
    "X79n1560_017:0527a19_1": "三峯庵之後。",
    "X79n1560_017:0527a19_2": "閱世五十有二。",
    "X79n1560_017:0527a19_3": "坐三十有七夏。",
    "X79n1560_017:0527a20_4": "無為子楊傑。",
    "X79n1560_017:0527a20_5": "為贊其像曰。",
    "X79n1560_017:0527a20_6": "一隻履。",
    "X79n1560_017:0527a20_7": "兩牛皮。",
    "X79n1560_017:0527a20_8": "金烏啼處木雞飛。",
    "X79n1560_017:0527a21_9": "半夜賣油翁發笑。",
    "X79n1560_017:0527a21_10": "白頭生得黑頭兒(一本云。",
    "X79n1560_017:0527a22_11": "黑頭生得白頭兒)。",
    "X79n1560_017:0527a22_12": "有得法上首一。",
    "X79n1560_017:0527a22_13": "名道楷禪師。",
    "X79n1560_017:0527a23_0": "天寧楷禪師",
    "X79n1560_017:0527a24_0": "禪師名道楷。",
    "X79n1560_017:0527a24_1": "沂州沂水人。",
    "X79n1560_017:0527a24_2": "生崔氏。",
    "X79n1560_017:0527a24_3": "為人剛勁孤硬。",
    "X79n1560_017:0527a24_4": "自其少時。",
    "X79n1560_017:0527b01_5": "即能辟穀學道。",
    "X79n1560_017:0527b01_6": "隱伊陽山中。",
    "X79n1560_017:0527b01_7": "後游京師。",
    "X79n1560_017:0527b01_8": "籍名術臺寺。",
    "X79n1560_017:0527b02_9": "試所習。",
    "X79n1560_017:0527b02_10": "得度具戒。",
    "X79n1560_017:0527b02_11": "謁青華嚴於淮山海會。",
    "X79n1560_017:0527b02_12": "問。",
    "X79n1560_017:0527b03_0": "佛祖言句。",
    "X79n1560_017:0527b03_1": "如家常茶飯。",
    "X79n1560_017:0527b03_2": "離此之外。",
    "X79n1560_017:0527b03_3": "別有為人言句也無。",
    "X79n1560_017:0527b04_4": "青曰。",
    "X79n1560_017:0527b04_5": "汝道寰中天子勑。",
    "X79n1560_017:0527b04_6": "還假禹湯堯舜也無。",
    "X79n1560_017:0527b04_7": "楷擬詶之。",
    "X79n1560_017:0527b05_8": "青以拂子摵之。",
    "X79n1560_017:0527b05_9": "曰。",
    "X79n1560_017:0527b05_10": "汝發意來。",
    "X79n1560_017:0527b05_11": "早有二十棒也。",
    "X79n1560_017:0527b05_12": "於是。",
    "X79n1560_017:0527b06_13": "楷悟旨於言下。",
    "X79n1560_017:0527b06_14": "再拜即去。",
    "X79n1560_017:0527b06_15": "青呼曰。",
    "X79n1560_017:0527b06_16": "且來。",
    "X79n1560_017:0527b06_17": "楷亦不顧。",
    "X79n1560_017:0527b07_0": "青曰。",
    "X79n1560_017:0527b07_1": "汝到不疑之地耶。",
    "X79n1560_017:0527b07_2": "楷以手掩耳。",
    "X79n1560_017:0527b07_3": "後掌眾食。",
    "X79n1560_017:0527b07_4": "青問。",
    "X79n1560_017:0527b08_0": "廚務勾當良苦。",
    "X79n1560_017:0527b08_1": "對曰不敢。",
    "X79n1560_017:0527b08_2": "曰。",
    "X79n1560_017:0527b08_3": "汝炊飯耶。",
    "X79n1560_017:0527b08_4": "煑粥耶。",
    "X79n1560_017:0527b08_5": "對曰。",
    "X79n1560_017:0527b09_0": "人工淘米著火。",
    "X79n1560_017:0527b09_1": "行者煑粥炊飯。",
    "X79n1560_017:0527b09_2": "曰。",
    "X79n1560_017:0527b09_3": "汝作什麼。",
    "X79n1560_017:0527b09_4": "對曰。",
    "X79n1560_017:0527b09_5": "和尚慈悲。",
    "X79n1560_017:0527b10_6": "放他閑去。",
    "X79n1560_017:0527b10_7": "又甞從青游園。",
    "X79n1560_017:0527b10_8": "青以拄杖付楷曰。",
    "X79n1560_017:0527b11_0": "理合與麼。",
    "X79n1560_017:0527b11_1": "對曰。",
    "X79n1560_017:0527b11_2": "與和尚提鞋挈杖。",
    "X79n1560_017:0527b11_3": "不為分外。",
    "X79n1560_017:0527b11_4": "曰。",
    "X79n1560_017:0527b11_5": "有同行在。",
    "X79n1560_017:0527b12_6": "對曰。",
    "X79n1560_017:0527b12_7": "那一人不受教。",
    "X79n1560_017:0527b12_8": "青遂休去。",
    "X79n1560_017:0527b12_9": "至晚青謂曰。",
    "X79n1560_017:0527b12_10": "早來說話未盡。",
    "X79n1560_017:0527b13_11": "對曰。",
    "X79n1560_017:0527b13_12": "更請舉看。",
    "X79n1560_017:0527b13_13": "青曰。",
    "X79n1560_017:0527b13_14": "卯生日戌生月。",
    "X79n1560_017:0527b13_15": "楷即點燈來曰。",
    "X79n1560_017:0527b14_16": "上來下去。",
    "X79n1560_017:0527b14_17": "總不空然。",
    "X79n1560_017:0527b14_18": "對曰。",
    "X79n1560_017:0527b14_19": "在左右。",
    "X79n1560_017:0527b14_20": "理合如此。",
    "X79n1560_017:0527b15_21": "曰。",
    "X79n1560_017:0527b15_22": "奴兒婢子。",
    "X79n1560_017:0527b15_23": "誰家屋裏無。",
    "X79n1560_017:0527b15_24": "對曰。",
    "X79n1560_017:0527b15_25": "和尚尊年。",
    "X79n1560_017:0527b15_26": "闕他不可。",
    "X79n1560_017:0527b16_27": "曰與麼殷勤。",
    "X79n1560_017:0527b16_28": "對曰。",
    "X79n1560_017:0527b16_29": "報恩有分。",
    "X79n1560_017:0527b16_30": "元豐五年。",
    "X79n1560_017:0527b16_31": "北還沂。",
    "X79n1560_017:0527b17_0": "閑居馬鞍山。",
    "X79n1560_017:0527b17_1": "遂出世說法。",
    "X79n1560_017:0527b17_2": "初住沂州之仙洞。",
    "X79n1560_017:0527b17_3": "後遷西洛之招提龍門。",
    "X79n1560_017:0527b18_4": "又遷住郢州之大陽。",
    "X79n1560_017:0527b18_5": "隋州之大洪。",
    "X79n1560_017:0527b18_6": "皆一時名公卿。",
    "X79n1560_017:0527b19_7": "為之勸請。",
    "X79n1560_017:0527b19_8": "洞上之風大震西北。",
    "X79n1560_017:0527b19_9": "崇寧三年有　詔。",
    "X79n1560_017:0527b20_10": "住東京十方淨因禪院。",
    "X79n1560_017:0527b20_11": "大觀元年冬。",
    "X79n1560_017:0527b20_12": "移住天寧。",
    "X79n1560_017:0527b21_13": "差中使押入。",
    "X79n1560_017:0527b21_14": "不許辭免。",
    "X79n1560_017:0527b21_15": "俄開封尹李孝壽奏。",
    "X79n1560_017:0527b21_16": "楷道行卓冠叢林。",
    "X79n1560_017:0527b22_17": "宜有以褒顯之。",
    "X79n1560_017:0527b22_18": "即賜紫伽棃。",
    "X79n1560_017:0527b22_19": "號定照禪師。",
    "X79n1560_017:0527b23_20": "楷焚香謝恩罷。",
    "X79n1560_017:0527b23_21": "上表辭之。",
    "X79n1560_017:0527b23_22": "曰。",
    "X79n1560_017:0527b23_23": "伏蒙聖慈。",
    "X79n1560_017:0527b23_24": "特差彰善閣。",
    "X79n1560_017:0527b24_25": "祗候譚禎。",
    "X79n1560_017:0527b24_26": "賜臣定照禪師號。",
    "X79n1560_017:0527b24_27": "及紫衣牒一道。",
    "X79n1560_017:0527b24_28": "臣感戴　睿恩。",
    "X79n1560_017:0527c01_29": "已即時焚香升座。",
    "X79n1560_017:0527c01_30": "仰祝　聖壽訖。",
    "X79n1560_017:0527c01_31": "伏念臣行業迂疎。",
    "X79n1560_017:0527c02_32": "道力綿薄。",
    "X79n1560_017:0527c02_33": "常發誓願。",
    "X79n1560_017:0527c02_34": "不受利名。",
    "X79n1560_017:0527c02_35": "堅持此意。",
    "X79n1560_017:0527c03_36": "積有歲年。",
    "X79n1560_017:0527c03_37": "庶幾如此傳道。",
    "X79n1560_017:0527c03_38": "後來使人專意佛法。",
    "X79n1560_017:0527c03_39": "今雖蒙異恩。",
    "X79n1560_017:0527c04_40": "若遂忝[曰/月]。",
    "X79n1560_017:0527c04_41": "則臣自違素願。",
    "X79n1560_017:0527c04_42": "何以教人。",
    "X79n1560_017:0527c04_43": "豈能仰稱　陛下所以命臣住持之意。",
    "X79n1560_017:0527c05_44": "所有前件恩牒。",
    "X79n1560_017:0527c05_45": "不敢祇受。",
    "X79n1560_017:0527c06_46": "伏望聖慈察臣微悃。",
    "X79n1560_017:0527c06_47": "非敢飾詞。",
    "X79n1560_017:0527c06_48": "特賜俞允臣沒齒行道。",
    "X79n1560_017:0527c07_49": "上報　天恩　上聞之。",
    "X79n1560_017:0527c07_50": "以付李孝壽。",
    "X79n1560_017:0527c07_51": "躬往諭　朝廷旌善之意。",
    "X79n1560_017:0527c08_52": "而楷確然不回。",
    "X79n1560_017:0527c08_53": "開封尹具以聞。",
    "X79n1560_017:0527c09_0": "上怒收付有司。",
    "X79n1560_017:0527c09_1": "有司知楷忠誠(一本知楷疎憃)。",
    "X79n1560_017:0527c09_2": "而適犯天威。",
    "X79n1560_017:0527c10_0": "問曰。",
    "X79n1560_017:0527c10_1": "長老枯瘁有疾乎。",
    "X79n1560_017:0527c10_2": "楷曰。",
    "X79n1560_017:0527c10_3": "平日有疾。",
    "X79n1560_017:0527c10_4": "今實無。",
    "X79n1560_017:0527c10_5": "又曰。",
    "X79n1560_017:0527c11_0": "言有疾。",
    "X79n1560_017:0527c11_1": "即於法免罪譴。",
    "X79n1560_017:0527c11_2": "楷曰。",
    "X79n1560_017:0527c11_3": "豈敢僥倖稱疾。",
    "X79n1560_017:0527c11_4": "而求脫罪譴乎。",
    "X79n1560_017:0527c12_5": "吏太息。",
    "X79n1560_017:0527c12_6": "於是受罸。",
    "X79n1560_017:0527c12_7": "著縫掖編管緇州。",
    "X79n1560_017:0527c12_8": "都城道俗。",
    "X79n1560_017:0527c13_9": "見者流涕。",
    "X79n1560_017:0527c13_10": "楷氣色閑暇。",
    "X79n1560_017:0527c13_11": "至緇州僦屋而居。",
    "X79n1560_017:0527c13_12": "學者益親。",
    "X79n1560_017:0527c14_13": "明年冬勑放令自便。",
    "X79n1560_017:0527c14_14": "庵于芙蓉湖中。",
    "X79n1560_017:0527c14_15": "數百人環繞坐臥。",
    "X79n1560_017:0527c15_16": "楷慮禍(或作患之)。",
    "X79n1560_017:0527c15_17": "乃日各食粥一杯。",
    "X79n1560_017:0527c15_18": "不堪者稍稍去。",
    "X79n1560_017:0527c16_0": "在者猶百許人。",
    "X79n1560_017:0527c16_1": "政和七年冬　勑賜所居庵額華嚴禪寺。",
    "X79n1560_017:0527c17_2": "明年五月十四日。",
    "X79n1560_017:0527c17_3": "無疾而歿。",
    "X79n1560_017:0527c17_4": "先寫偈付侍者曰。",
    "X79n1560_017:0527c18_0": "吾年七十六。",
    "X79n1560_017:0527c18_1": "世緣今已足。",
    "X79n1560_017:0527c18_2": "生不愛天堂。",
    "X79n1560_017:0527c18_3": "死不怕地獄。",
    "X79n1560_017:0527c19_0": "撒手橫身三界外。",
    "X79n1560_017:0527c19_1": "騰騰任運何拘束。",
    "X79n1560_017:0527c19_2": "初楷在大陽。",
    "X79n1560_017:0527c19_3": "青華嚴遣果侍者。",
    "X79n1560_017:0527c20_4": "以大陽皮履直裰付之。",
    "X79n1560_017:0527c20_5": "楷以付襄州洞山道微。",
    "X79n1560_017:0527c21_6": "微退罷還浙東。",
    "X79n1560_017:0527c21_7": "歿於雙林小寺。",
    "X79n1560_017:0527c21_8": "今取以還鹿門山。",
    "X79n1560_017:0527c22_9": "建閣藏之曰藏衣。",
    "X79n1560_017:0527c22_10": "楷偈句精深有旨法。",
    "X79n1560_017:0527c22_11": "作五偈。",
    "X79n1560_017:0527c23_12": "述其門風。",
    "X79n1560_017:0527c23_13": "一曰妙唱不干舌。",
    "X79n1560_017:0527c23_14": "偈曰。",
    "X79n1560_017:0527c23_15": "剎剎塵塵處處譚。",
    "X79n1560_017:0527c24_16": "不勞彈子善財參。",
    "X79n1560_017:0527c24_17": "空生也解通消息。",
    "X79n1560_017:0527c24_18": "花雨巖前鳥不銜。",
    "X79n1560_017:0528a01_19": "二曰死蛇驚出草。",
    "X79n1560_017:0528a01_20": "偈曰日炙風吹草裡埋。",
    "X79n1560_017:0528a01_21": "觸他毒氣又還乖。",
    "X79n1560_017:0528a02_22": "暗地若教開死口。",
    "X79n1560_017:0528a02_23": "長安依舊絕人來。",
    "X79n1560_017:0528a02_24": "三曰解鍼枯骨吟。",
    "X79n1560_017:0528a03_25": "偈曰。",
    "X79n1560_017:0528a03_26": "死中活得是非常。",
    "X79n1560_017:0528a03_27": "密用他家別有長。",
    "X79n1560_017:0528a04_28": "半夜髑髏吟一曲。",
    "X79n1560_017:0528a04_29": "冰河紅燄却清凉。",
    "X79n1560_017:0528a04_30": "四曰鐵鋸和三臺。",
    "X79n1560_017:0528a05_31": "偈曰。",
    "X79n1560_017:0528a05_32": "不是宮商調。",
    "X79n1560_017:0528a05_33": "誰人和一場。",
    "X79n1560_017:0528a05_34": "伯牙何所措。",
    "X79n1560_017:0528a06_0": "此曲舊來長。",
    "X79n1560_017:0528a06_1": "五曰古今無間。",
    "X79n1560_017:0528a06_2": "偈曰。",
    "X79n1560_017:0528a06_3": "一法元無萬法空。",
    "X79n1560_017:0528a07_0": "箇中那許悟圓通。",
    "X79n1560_017:0528a07_1": "將謂少林消息斷。",
    "X79n1560_017:0528a07_2": "桃花依舊笑春風。",
    "X79n1560_017:0528a08_3": "楷舊隱與虎為鄰。",
    "X79n1560_017:0528a08_4": "虎甞乳四子月餘。",
    "X79n1560_017:0528a08_5": "楷闞其出。",
    "X79n1560_017:0528a08_6": "往視之。",
    "X79n1560_017:0528a09_7": "腥臭不可言。",
    "X79n1560_017:0528a09_8": "竊擕其一還。",
    "X79n1560_017:0528a09_9": "虎得彘曳至。",
    "X79n1560_017:0528a09_10": "弄穴前伏地。",
    "X79n1560_017:0528a10_11": "喜見脊尾。",
    "X79n1560_017:0528a10_12": "但見三子怒。",
    "X79n1560_017:0528a10_13": "以足跑地吼。",
    "X79n1560_017:0528a10_14": "群鳥皆鳴翔其上。",
    "X79n1560_017:0528a11_15": "楷即放還之。",
    "X79n1560_017:0528a11_16": "其寄伊陽宰韓承議偈曰。",
    "X79n1560_017:0528a11_17": "老愛依山人事稀。",
    "X79n1560_017:0528a12_18": "虎馴庵畔怪來遲。",
    "X79n1560_017:0528a12_19": "寥寥石室塵埃滿。",
    "X79n1560_017:0528a12_20": "不知何日是歸期。",
    "X79n1560_017:0528a13_21": "又曰。",
    "X79n1560_017:0528a13_22": "數里無人到。",
    "X79n1560_017:0528a13_23": "山黃始覺秋。",
    "X79n1560_017:0528a13_24": "嵓間一覺睡。",
    "X79n1560_017:0528a14_25": "忘却百年憂。",
    "X79n1560_017:0528a15_0": "贊曰。",
    "X79n1560_017:0528a15_1": "宗門尚繼嗣。",
    "X79n1560_017:0528a15_2": "則若依彷世典禮。",
    "X79n1560_017:0528a15_3": "為之後者。",
    "X79n1560_017:0528a15_4": "為之子。",
    "X79n1560_017:0528a16_5": "遠使青續洞上已墜之綱。",
    "X79n1560_017:0528a16_6": "是也。",
    "X79n1560_017:0528a16_7": "然青楷父子。",
    "X79n1560_017:0528a16_8": "任重道遠。",
    "X79n1560_017:0528a17_9": "皆能刻苦。",
    "X79n1560_017:0528a17_10": "生死以之卒。",
    "X79n1560_017:0528a17_11": "勃然而興。",
    "X79n1560_017:0528a17_12": "賢矣哉。",
    "X79n1560_017:0528a19_0": "禪林僧寶傳卷第十七"
}