[
    {
        "source_sentence": "禮懺文",
        "from": "T85n2856_001:1305c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身有罪盡懺悔已。歸命禮三寶　志心勸請",
        "from": "T85n2856_001:1305c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方佛見在成道者。我請轉法輪。安樂諸眾",
        "from": "T85n2856_001:1305c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生。",
        "from": "T85n2856_001:1305c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方一切佛若欲捨受命。",
        "from": "T85n2856_001:1305c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今投面禮勸請令久住　勸請已歸命禮三寶　志心隨喜所有布施福。",
        "from": "T85n2856_001:1305c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒修禪定惠從身口意生。",
        "from": "T85n2856_001:1305c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去來今所有習學三乘人具足一乘者無量人天福眾等皆隨喜。",
        "from": "T85n2856_001:1305c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨喜已歸命禮三寶　志心迴向我所作福業。",
        "from": "T85n2856_001:1305c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切皆和合為度群生故。",
        "from": "T85n2856_001:1305c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正迴向佛道。",
        "from": "T85n2856_001:1305c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪應如是懺。",
        "from": "T85n2856_001:1305c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸請隨喜福迴向於菩提。",
        "from": "T85n2856_001:1305c28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴向已歸命禮三寶　志心發願願諸眾生等悉發菩提心。",
        "from": "T85n2856_001:1305c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫心常思念十方一切佛。",
        "from": "T85n2856_001:1306a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復願諸眾生永破諸煩惱。",
        "from": "T85n2856_001:1306a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了見佛性由如妙德等。",
        "from": "T85n2856_001:1306a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願已歸命禮三寶。",
        "from": "T85n2856_001:1306a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白眾生等聽說寅朝清淨偈　欲求寂滅樂。",
        "from": "T85n2856_001:1306a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當學沙門法。",
        "from": "T85n2856_001:1306a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣食繼身命。",
        "from": "T85n2856_001:1306a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精麁隨眾等。",
        "from": "T85n2856_001:1306a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日寅朝清淨各記六念。",
        "from": "T85n2856_001:1306a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念佛念法念僧念戒念天念施。",
        "from": "T85n2856_001:1306a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟佛及法事並依上文。",
        "from": "T85n2856_001:1306a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又黃昏偈　西方日已沒。",
        "from": "T85n2856_001:1306a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵勞猶未除。",
        "from": "T85n2856_001:1306a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老病死時至。",
        "from": "T85n2856_001:1306a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相看不久居。",
        "from": "T85n2856_001:1306a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念念催年促。",
        "from": "T85n2856_001:1306a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如少水魚。",
        "from": "T85n2856_001:1306a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸諸行道眾。",
        "from": "T85n2856_001:1306a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修學至無餘。",
        "from": "T85n2856_001:1306a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中夜無常偈　眾等各各觀身處。",
        "from": "T85n2856_001:1306a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "骨肉巾皮相浮堅。",
        "from": "T85n2856_001:1306a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地水火風假成身。",
        "from": "T85n2856_001:1306a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大分散元無主。",
        "from": "T85n2856_001:1306a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一函臭肉變成疽。",
        "from": "T85n2856_001:1306a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散分爛𭶦從灰土。",
        "from": "T85n2856_001:1306a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後夜無常偈　時光千流轉。",
        "from": "T85n2856_001:1306a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽至五更初。",
        "from": "T85n2856_001:1306a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無常念念至。",
        "from": "T85n2856_001:1306a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒與死王居。",
        "from": "T85n2856_001:1306a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸諸行道眾。",
        "from": "T85n2856_001:1306a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修學至無餘。",
        "from": "T85n2856_001:1306a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根懺　我等自從無量劫恒被六賊欺。",
        "from": "T85n2856_001:1306a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "居一相之中而共生分別。",
        "from": "T85n2856_001:1306a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼根常愛色。",
        "from": "T85n2856_001:1306a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳分別音聲。",
        "from": "T85n2856_001:1306a18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻惑著餘香。",
        "from": "T85n2856_001:1306a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌鎮貪諸味。",
        "from": "T85n2856_001:1306a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身常樂受觸。",
        "from": "T85n2856_001:1306a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意相遍攀緣。",
        "from": "T85n2856_001:1306a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶斯顛倒心固。",
        "from": "T85n2856_001:1306a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈輪生死海。",
        "from": "T85n2856_001:1306a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔已歸命禮三　願我等從今日乃至證菩提。",
        "from": "T85n2856_001:1306a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六賊恒為成六通。",
        "from": "T85n2856_001:1306a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三毒變為三解脫。",
        "from": "T85n2856_001:1306a21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同一真如平等惺。",
        "from": "T85n2856_001:1306a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不捨生死證涅槃。",
        "from": "T85n2856_001:1306a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒於六趣濟群生。",
        "from": "T85n2856_001:1306a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共證如來無上道。",
        "from": "T85n2856_001:1306a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心發願　願我眼根常見佛。",
        "from": "T85n2856_001:1306a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願耳恒聞說法聲。",
        "from": "T85n2856_001:1306a25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願鼻不嗅一餘香。",
        "from": "T85n2856_001:1306a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願口常誦波羅蜜。",
        "from": "T85n2856_001:1306a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願身不染諸邪境。",
        "from": "T85n2856_001:1306a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願意不攀有相緣。",
        "from": "T85n2856_001:1306a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願心能除煩惱賊。",
        "from": "T85n2856_001:1306a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我恒到涅槃城。",
        "from": "T85n2856_001:1306a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我願眾生盡成佛。",
        "from": "T85n2856_001:1306a27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我願普證涅槃因。",
        "from": "T85n2856_001:1306a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願已歸命禮三寶　眾生無邊誓願度。",
        "from": "T85n2856_001:1306a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "煩惱無邊誓願斷。",
        "from": "T85n2856_001:1306a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法門無盡誓願學。",
        "from": "T85n2856_001:1306b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無上佛道誓願成。",
        "from": "T85n2856_001:1306b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽說知時無常偈　色情若不住。",
        "from": "T85n2856_001:1306b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草動染諸塵。",
        "from": "T85n2856_001:1306b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨緣遍六趣。",
        "from": "T85n2856_001:1306b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剎那不繫停。",
        "from": "T85n2856_001:1306b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知身如電影。",
        "from": "T85n2856_001:1306b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟趣若浮雲。",
        "from": "T85n2856_001:1306b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知心本淨。",
        "from": "T85n2856_001:1306b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迴願入真門。",
        "from": "T85n2856_001:1306b04_16",
        "context_with_next_sentence": true
    }
]