[
    {
        "source_sentence": "傳教大師將來越州錄",
        "from": "T55n2160_001:1058b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本國求法僧最澄目錄。",
        "from": "T55n2160_001:1058b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總合二百三十部四百六十卷。",
        "from": "T55n2160_001:1058b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向台州求得法門。",
        "from": "T55n2160_001:1058b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都合一百二十八部三百四十五卷名目具別錄。",
        "from": "T55n2160_001:1058b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向越府取本寫取經并念誦法門。",
        "from": "T55n2160_001:1058b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都合一百二部一百一十五卷。",
        "from": "T55n2160_001:1058b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五佛頂轉輪王經五卷一百張大輪金剛陀羅尼經一卷常求利毒女經一卷理趣品別譯經一卷軍荼利菩薩法一卷軍荼利別法一卷瞿醯三卷無量壽如來瑜伽儀軌一卷二十五枚一字頂輪王瑜伽法一卷普賢金剛瑜伽法一卷十八會瑜伽法一卷普賢行願讚一卷十枚三十七尊名一卷三十七尊心要一卷寶部金剛讚一卷觀音法一卷毘奈耶經一卷般若心經梵本漢字一卷梵漢字金剛輪真言一卷陀羅尼啟請文一卷已上二十部二十六卷同帙。",
        "from": "T55n2160_001:1058c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大陀羅尼經一卷梵天擇地經一卷雜真言一卷漢頂三昧耶戒一卷梵字佛頂尊勝真言一卷壇樣一卷三十七尊樣一卷三十七尊供養具樣一卷壇樣并供養具樣一卷雜供養具印一卷多聞天法一卷金輪佛頂像樣一卷一字轉輪三印一卷七俱胝佛母像樣一卷一字梵字一卷火頭金剛像樣一卷八菩薩位樣一卷冥道無遮齋法一卷加火吽儀軌一卷已上一十八部一十八卷同帙。",
        "from": "T55n2160_001:1058c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四教義二卷第三第四章安大師碑文一卷常州弘善寺釋法宣撰　八紙梁肅與道士吳筠書一卷三紙天台智者大師別傳一卷章安和上述二十紙止觀輔行傳序一卷普門子述釋籤緣起序一卷君山除饉男普門子詞剡山石城寺彌勒石像碑一卷妙樂和上遺旨一卷三如來畫像贊一卷天台大師誦經觀記一卷荊溪和上撰祭第六祖荊溪和上文一卷天台沙門靈嶷作止觀記中異義一卷𨗉座主記天台沙門乾濟集天台第七祖智度和尚略傳一卷沙門志明集唐佛隴故荊溪大師讚一卷會稽神邕述天台國清雜集一卷國清寺智者大師影堂記一卷長安沙門曇羿青溪山記一卷止觀小科文一卷四教科文一卷十不二科文一卷長安座主傳一卷天台沙門乾濟述已上二十一部二十二卷同帙雜第一三十紙。",
        "from": "T55n2160_001:1059a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛經疏三卷沙門圓暉撰瓦官寺維摩碑一卷關河文筆一卷智度論音一卷古今佛道論衡二卷五百問事一卷真人集一卷已上七部十卷同帙雜第二。",
        "from": "T55n2160_001:1059a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸賢問答一卷翰林院等集一卷西國付法記一卷湖州皎然和上齋文一卷雜文五首一卷韋之晉傳一卷傅大士還詩十二首一卷華嚴法界觀一卷齋文式一卷浮漚篇一卷佛道二宗論一卷三教不齊論一卷十弟子讚一卷什法師付法一卷刀梯歌一卷靖心寺鐘銘一卷五更讚念佛一卷菩薩戒文句一卷西域大師論一卷看心論一卷無生義一卷雙林大士集一卷二十紙曹溪大師傳一卷絕觀論一卷法華經名相一卷青面北天陀羅尼法一卷般若心經略疏一卷達磨系圖一卷佛受苦決義一卷十五紙法性章一卷加青辨量判斷一卷十紙二定二戒體一卷四分律鈔數義一卷二十紙四分律鈔音訓一卷十五紙道場頂一卷闕已上三十四部三十四卷同帙雜第三六十紙。",
        "from": "T55n2160_001:1059b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總日本國求法目錄一卷相送集四卷甲乙丙丁戊己庚　百紙已上二部五卷同帙。",
        "from": "T55n2160_001:1059c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦供養具樣五鈷拔折羅樣一口五鈷金剛鈴樣一口金剛輪二口金剛羯磨二口真言和上付法印信三鈷拔折羅一口已上念誦供養具樣也。",
        "from": "T55n2160_001:1059c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右件念誦法門等并念誦供養具樣等。",
        "from": "T55n2160_001:1059c10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向越府龍興寺。",
        "from": "T55n2160_001:1059c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣順曉和上所。",
        "from": "T55n2160_001:1059c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即最澄并義真。",
        "from": "T55n2160_001:1059c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逐和上到湖鏡東峯山道場。",
        "from": "T55n2160_001:1059c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和上導兩僧治道場。",
        "from": "T55n2160_001:1059c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引入五部灌頂曼荼羅壇場。",
        "from": "T55n2160_001:1059c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現蒙授真言法。",
        "from": "T55n2160_001:1059c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又灌頂真言水。",
        "from": "T55n2160_001:1059c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便寫取上件念誦法門并供養具樣。",
        "from": "T55n2160_001:1059c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勘定已畢。",
        "from": "T55n2160_001:1059c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最澄等。",
        "from": "T55n2160_001:1059c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深蒙郎中慈造。",
        "from": "T55n2160_001:1059c15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去年向台州。",
        "from": "T55n2160_001:1059c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩僧等。",
        "from": "T55n2160_001:1059c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受大小二乘戒。",
        "from": "T55n2160_001:1059c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又寫取數百卷文書。",
        "from": "T55n2160_001:1059c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今年進越府。",
        "from": "T55n2160_001:1059c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二僧入五部灌頂壇。",
        "from": "T55n2160_001:1059c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又抄取念誦法門。",
        "from": "T55n2160_001:1059c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前後都總二百三十部。",
        "from": "T55n2160_001:1059c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四百六十卷也。",
        "from": "T55n2160_001:1059c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能事已畢。",
        "from": "T55n2160_001:1059c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今歸本鄉今欲請當州印信。",
        "from": "T55n2160_001:1059c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外方學徒等。",
        "from": "T55n2160_001:1059c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將示求法元由矣。",
        "from": "T55n2160_001:1059c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然則郎中傳法之功。",
        "from": "T55n2160_001:1059c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攀福於現當。",
        "from": "T55n2160_001:1059c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群生聽法之德。",
        "from": "T55n2160_001:1059c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "期果於妙覺。",
        "from": "T55n2160_001:1059c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願使君。",
        "from": "T55n2160_001:1059c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "近登三台位。",
        "from": "T55n2160_001:1059c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠證三點果。",
        "from": "T55n2160_001:1059c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後。",
        "from": "T55n2160_001:1059c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪通三界。",
        "from": "T55n2160_001:1059c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "橫撥十方。",
        "from": "T55n2160_001:1059c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六道四生一切含靈。",
        "from": "T55n2160_001:1059c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同入禪門。",
        "from": "T55n2160_001:1059c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱遊慧苑。",
        "from": "T55n2160_001:1059c24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信謗平等。",
        "from": "T55n2160_001:1059c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他得益歟。",
        "from": "T55n2160_001:1059c25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐貞元貳拾壹年歲次乙酉五月朔己巳拾參日辛巳日本國求法僧　最澄錄日本國求法譯語僧　義真日本國求法傔從丹　福成孔夫子云。",
        "from": "T55n2160_001:1060a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾聞。",
        "from": "T55n2160_001:1060a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方有聖人焉。",
        "from": "T55n2160_001:1060a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其教以清淨無為為本。",
        "from": "T55n2160_001:1060a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不染不著為妙。",
        "from": "T55n2160_001:1060a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其化人也。",
        "from": "T55n2160_001:1060a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足功德。",
        "from": "T55n2160_001:1060a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃為圓明。",
        "from": "T55n2160_001:1060a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最澄闍梨。",
        "from": "T55n2160_001:1060a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性稟生知之才。",
        "from": "T55n2160_001:1060a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來自禮義之國。",
        "from": "T55n2160_001:1060a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬里求法。",
        "from": "T55n2160_001:1060a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視險若夷。",
        "from": "T55n2160_001:1060a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不憚艱勞。",
        "from": "T55n2160_001:1060a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神力保護。",
        "from": "T55n2160_001:1060a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南登天台之巔。",
        "from": "T55n2160_001:1060a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西泛鏡湖之水。",
        "from": "T55n2160_001:1060a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "窮智者之法門。",
        "from": "T55n2160_001:1060a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "探灌頂之神祕。",
        "from": "T55n2160_001:1060a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂法門龍象。",
        "from": "T55n2160_001:1060a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青蓮出池。",
        "from": "T55n2160_001:1060a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將此大乘往傳本國。",
        "from": "T55n2160_001:1060a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求茲印信執以為憑。",
        "from": "T55n2160_001:1060a09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昨者陸台州已與題記。",
        "from": "T55n2160_001:1060a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故具所覩爰申直筆。",
        "from": "T55n2160_001:1060a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大唐貞元二十一年五月十五日。",
        "from": "T55n2160_001:1060a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝議郎使持節明州諸軍事守明州刺史上柱國滎陽鄭審則書。",
        "from": "T55n2160_001:1060a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日本國入唐使。",
        "from": "T55n2160_001:1060a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辨兼越前守　　　藤原朝臣　葛野麿",
        "from": "T55n2160_001:1060a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "笠　　臣　　田作",
        "from": "T55n2160_001:1060a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勢大目勳六等　　山田造　大庭",
        "from": "T55n2160_001:1060a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常陸少目　　　　上毛野公　　穎人",
        "from": "T55n2160_001:1060a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山家將來目錄序昔者吾三聖之入唐求法也。",
        "from": "T55n2160_001:1060a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆有將來錄。",
        "from": "T55n2160_001:1060a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先是刊行於世矣。",
        "from": "T55n2160_001:1060a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今復殊壽此摹錄者。",
        "from": "T55n2160_001:1060a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋使其真蹟不朽也。",
        "from": "T55n2160_001:1060a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫國朝文物之盛。",
        "from": "T55n2160_001:1060a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云緇云素。",
        "from": "T55n2160_001:1060a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫太於延曆弘仁聖代。",
        "from": "T55n2160_001:1060a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至若其書法精眇。",
        "from": "T55n2160_001:1060a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則晚唐以還聲書之士實所不能及。",
        "from": "T55n2160_001:1060a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人僉知焉。",
        "from": "T55n2160_001:1060a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋人讚曰幾二王亦非誣。",
        "from": "T55n2160_001:1060a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當時尚然。",
        "from": "T55n2160_001:1060a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況今世存數千字者。",
        "from": "T55n2160_001:1060b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可謂希世巨寶也。",
        "from": "T55n2160_001:1060b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然毖之臧中。",
        "from": "T55n2160_001:1060b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則非但人知稀。",
        "from": "T55n2160_001:1060b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或恐不能全璧於後世。",
        "from": "T55n2160_001:1060b02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈可不憾乎。",
        "from": "T55n2160_001:1060b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今茲辛巳之夏。",
        "from": "T55n2160_001:1060b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法曼超公齎郭填之本徠曰。",
        "from": "T55n2160_001:1060b04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師入滅壹千年。",
        "from": "T55n2160_001:1060b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於今真蹟儼可見矣。",
        "from": "T55n2160_001:1060b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今刻之以置開□塔院。",
        "from": "T55n2160_001:1060b05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則猶傳永世可不盛觀哉。",
        "from": "T55n2160_001:1060b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於茲吾儕彈指隨憙而諾矣。",
        "from": "T55n2160_001:1060b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頃日剞劂告功成。",
        "from": "T55n2160_001:1060b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同法切責題一言。",
        "from": "T55n2160_001:1060b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予固辭不許。",
        "from": "T55n2160_001:1060b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故不顧唯質而不文書其始末云。",
        "from": "T55n2160_001:1060b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文政辛巳僧自恣日。",
        "from": "T55n2160_001:1060b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "延曆寺遮那業苾芻亮照撰併書。",
        "from": "T55n2160_001:1060b10_4",
        "context_with_next_sentence": true
    }
]