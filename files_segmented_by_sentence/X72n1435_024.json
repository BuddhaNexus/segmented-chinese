{
    "X72n1435_024:0331b07_0": "無異禪師廣錄卷第二十四",
    "X72n1435_024:0331b09_0": "住博山法孫　弘瀚　彚編",
    "X72n1435_024:0331b10_0": "首座法孫　弘裕　同集",
    "X72n1435_024:0331b11_0": "　　宗教答響四",
    "X72n1435_024:0331b12_0": "卓發之文學問。",
    "X72n1435_024:0331b12_1": "華嚴會中。",
    "X72n1435_024:0331b12_2": "二乘如盲如聾。",
    "X72n1435_024:0331b12_3": "然亦兼攝聲聞。",
    "X72n1435_024:0331b13_4": "以包含無量乘故。",
    "X72n1435_024:0331b13_5": "此經雖云二乘種不生。",
    "X72n1435_024:0331b13_6": "乃所宣道品。",
    "X72n1435_024:0331b14_7": "大小互通。",
    "X72n1435_024:0331b14_8": "正與華嚴四聖諦品不異故。",
    "X72n1435_024:0331b14_9": "有生彼經劫。",
    "X72n1435_024:0331b15_10": "方證小果者。",
    "X72n1435_024:0331b15_11": "如大智度論言。",
    "X72n1435_024:0331b15_12": "彌陀亦以三乘度生。",
    "X72n1435_024:0331b16_13": "自應二藏五教總攝。",
    "X72n1435_024:0331b16_14": "何云不攝小乘。",
    "X72n1435_024:0331b16_15": "且既通雜華。",
    "X72n1435_024:0331b17_16": "復不能通雜華所攝無量乘耶。",
    "X72n1435_024:0331b18_0": "師云。",
    "X72n1435_024:0331b18_1": "居士既知華嚴攝無量乘。",
    "X72n1435_024:0331b18_2": "豈上德聲聞。",
    "X72n1435_024:0331b18_3": "如身子目連杜視絕聽。",
    "X72n1435_024:0331b19_4": "悉是如來勝方便力故。",
    "X72n1435_024:0331b19_5": "為導引一類小機。",
    "X72n1435_024:0331b20_6": "發起深信。",
    "X72n1435_024:0331b20_7": "信於一乘。",
    "X72n1435_024:0331b20_8": "如法華云。",
    "X72n1435_024:0331b20_9": "佛以無數方便。",
    "X72n1435_024:0331b21_0": "引導眾生。",
    "X72n1435_024:0331b21_1": "其實皆為一佛乘故。",
    "X72n1435_024:0331b21_2": "此經云。",
    "X72n1435_024:0331b21_3": "二乘種不生者。",
    "X72n1435_024:0331b22_4": "正為化導二乘執空不修淨土者。",
    "X72n1435_024:0331b22_5": "鈔云。",
    "X72n1435_024:0331b22_6": "豈獨凡夫。",
    "X72n1435_024:0331b23_0": "亦度二乘聖人。",
    "X72n1435_024:0331b23_1": "二乘既生。",
    "X72n1435_024:0331b23_2": "況菩薩不生。",
    "X72n1435_024:0331b23_3": "彌陀以三乘度生。",
    "X72n1435_024:0331b24_4": "當無疑惑。",
    "X72n1435_024:0331b24_5": "既以三乘化導。",
    "X72n1435_024:0331b24_6": "亦攝無量乘。",
    "X72n1435_024:0331b24_7": "二經互通。",
    "X72n1435_024:0331c01_8": "不言可喻。",
    "X72n1435_024:0331c01_9": "涅槃云。",
    "X72n1435_024:0331c01_10": "闡提不入。",
    "X72n1435_024:0331c01_11": "非闡提不入涅槃也。",
    "X72n1435_024:0331c02_0": "問。",
    "X72n1435_024:0331c02_1": "餘門學道。",
    "X72n1435_024:0331c02_2": "名竪出三界。",
    "X72n1435_024:0331c02_3": "念佛往生。",
    "X72n1435_024:0331c02_4": "名橫出三界。",
    "X72n1435_024:0331c02_5": "所謂餘門正指教中觀行故。",
    "X72n1435_024:0331c03_6": "參禪稱為別傳。",
    "X72n1435_024:0331c03_7": "淨土亦云。",
    "X72n1435_024:0331c04_0": "徑路皆以超越觀行故。",
    "X72n1435_024:0331c04_1": "今云。",
    "X72n1435_024:0331c04_2": "觀即是念。",
    "X72n1435_024:0331c04_3": "念即是觀。",
    "X72n1435_024:0331c04_4": "直以台觀當之。",
    "X72n1435_024:0331c05_5": "不反鈍置念佛耶。",
    "X72n1435_024:0331c06_0": "師云。",
    "X72n1435_024:0331c06_1": "橫竪等論。",
    "X72n1435_024:0331c06_2": "鈔云。",
    "X72n1435_024:0331c06_3": "如蟲在竹。",
    "X72n1435_024:0331c06_4": "竪則歷節難通。",
    "X72n1435_024:0331c06_5": "橫則一時解脫。",
    "X72n1435_024:0331c07_6": "謂樂邦與苦域並峙故。",
    "X72n1435_024:0331c07_7": "曰橫也。",
    "X72n1435_024:0331c07_8": "此是一往之說。",
    "X72n1435_024:0331c08_9": "論一心者。",
    "X72n1435_024:0331c08_10": "橫竪皆遍。",
    "X72n1435_024:0331c08_11": "獨淨土不具竪。",
    "X72n1435_024:0331c08_12": "而止曰橫。",
    "X72n1435_024:0331c09_0": "彌陀經云。",
    "X72n1435_024:0331c09_1": "其佛光明無量。",
    "X72n1435_024:0331c09_2": "照十方國。",
    "X72n1435_024:0331c09_3": "無所障礙。",
    "X72n1435_024:0331c09_4": "觀經云。",
    "X72n1435_024:0331c10_5": "是心作佛。",
    "X72n1435_024:0331c10_6": "心即佛故。",
    "X72n1435_024:0331c10_7": "淨土惟心。",
    "X72n1435_024:0331c10_8": "以界曰橫。",
    "X72n1435_024:0331c10_9": "論心豈不圓具耶。",
    "X72n1435_024:0331c11_10": "餘門非單指觀行。",
    "X72n1435_024:0331c11_11": "實乃具一切法門。",
    "X72n1435_024:0331c11_12": "參禪稱為別傳者。",
    "X72n1435_024:0331c12_13": "非五教之所詮。",
    "X72n1435_024:0331c12_14": "淨土亦云徑路。",
    "X72n1435_024:0331c12_15": "豈三觀之所及。",
    "X72n1435_024:0331c13_16": "今說觀即是念。",
    "X72n1435_024:0331c13_17": "念即是觀。",
    "X72n1435_024:0331c13_18": "舉一念即具觀行。",
    "X72n1435_024:0331c14_0": "以一念超越。",
    "X72n1435_024:0331c14_1": "即便往生。",
    "X72n1435_024:0331c14_2": "非觀行成就。",
    "X72n1435_024:0331c14_3": "然後乃生故。",
    "X72n1435_024:0331c14_4": "知念不妨攝觀。",
    "X72n1435_024:0331c15_5": "非觀行能鈍置念佛也。",
    "X72n1435_024:0331c16_0": "問。",
    "X72n1435_024:0331c16_1": "觀經疏以十六觀通三諦。",
    "X72n1435_024:0331c16_2": "今以此經。",
    "X72n1435_024:0331c16_3": "旁通觀經。",
    "X72n1435_024:0331c16_4": "則入台觀門庭。",
    "X72n1435_024:0331c17_5": "以此經分屬圓教。",
    "X72n1435_024:0331c17_6": "則入事事無礙法界。",
    "X72n1435_024:0331c18_0": "然台宗以圓教。",
    "X72n1435_024:0331c18_1": "獨歸法華。",
    "X72n1435_024:0331c18_2": "而第四法界。",
    "X72n1435_024:0331c18_3": "惟華嚴有之。",
    "X72n1435_024:0331c19_0": "未知台宗三觀。",
    "X72n1435_024:0331c19_1": "得攝法界觀否。",
    "X72n1435_024:0331c19_2": "此天台賢首差別處。",
    "X72n1435_024:0331c20_0": "若為會同。",
    "X72n1435_024:0331c21_0": "師云。",
    "X72n1435_024:0331c21_1": "觀經疏。",
    "X72n1435_024:0331c21_2": "以十六觀通三諦。",
    "X72n1435_024:0331c21_3": "今以此經。",
    "X72n1435_024:0331c21_4": "旁通觀經。",
    "X72n1435_024:0331c22_0": "亦不妨。",
    "X72n1435_024:0331c22_1": "以十六觀。",
    "X72n1435_024:0331c22_2": "旁通此經。",
    "X72n1435_024:0331c22_3": "何以故。",
    "X72n1435_024:0331c22_4": "彌陀經云。",
    "X72n1435_024:0331c22_5": "寶網行樹。",
    "X72n1435_024:0331c23_6": "蓮池階道。",
    "X72n1435_024:0331c23_7": "悉以金銀琉璃玻瓈合成。",
    "X72n1435_024:0331c23_8": "其佛光明無量。",
    "X72n1435_024:0331c24_9": "聲聞菩薩無數。",
    "X72n1435_024:0331c24_10": "復以西方攝。",
    "X72n1435_024:0331c24_11": "懸鼓豈不具足。",
    "X72n1435_024:0331c24_12": "一十六觀。",
    "X72n1435_024:0332a01_13": "似不必入台教門庭。",
    "X72n1435_024:0332a01_14": "台教當入我之一念。",
    "X72n1435_024:0332a01_15": "為徑中之徑。",
    "X72n1435_024:0332a02_16": "不亦宜乎。",
    "X72n1435_024:0332a02_17": "謂此經分屬圓教。",
    "X72n1435_024:0332a02_18": "天台以圓教。",
    "X72n1435_024:0332a03_0": "獨歸法華。",
    "X72n1435_024:0332a03_1": "鈔云。",
    "X72n1435_024:0332a03_2": "事事無礙。",
    "X72n1435_024:0332a03_3": "惟華嚴有之。",
    "X72n1435_024:0332a03_4": "既云圓教。",
    "X72n1435_024:0332a03_5": "豈不攝事事無礙。",
    "X72n1435_024:0332a04_6": "以事事無礙。",
    "X72n1435_024:0332a04_7": "標法界觀名。",
    "X72n1435_024:0332a04_8": "豈不攝圓彌陀分屬。",
    "X72n1435_024:0332a05_9": "如掬海之一滴。",
    "X72n1435_024:0332a05_10": "不妨同於全潮。",
    "X72n1435_024:0332a05_11": "天台賢首與此經疏鈔。",
    "X72n1435_024:0332a06_12": "別而不別。",
    "X72n1435_024:0332a06_13": "不別而別。",
    "X72n1435_024:0332a06_14": "非此之謂歟。",
    "X72n1435_024:0332a07_0": "問。",
    "X72n1435_024:0332a07_1": "合論判彌陀淨土。",
    "X72n1435_024:0332a07_2": "是權非實。",
    "X72n1435_024:0332a07_3": "淨名惟心淨土。",
    "X72n1435_024:0332a07_4": "是實淨土。",
    "X72n1435_024:0332a08_5": "然淨名言。",
    "X72n1435_024:0332a08_6": "菩薩成佛時。",
    "X72n1435_024:0332a08_7": "直心等眾生。",
    "X72n1435_024:0332a08_8": "來生其國。",
    "X72n1435_024:0332a09_0": "是明言攝受眾生。",
    "X72n1435_024:0332a09_1": "死此生彼之事。",
    "X72n1435_024:0332a09_2": "與彌陀無二無別。",
    "X72n1435_024:0332a10_0": "正指往生事相。",
    "X72n1435_024:0332a10_1": "論中何以分作兩橛。",
    "X72n1435_024:0332a10_2": "疏言。",
    "X72n1435_024:0332a10_3": "此指事一心者。",
    "X72n1435_024:0332a11_4": "豈事一心。",
    "X72n1435_024:0332a11_5": "便不名惟心耶。",
    "X72n1435_024:0332a12_0": "師云。",
    "X72n1435_024:0332a12_1": "合論云。",
    "X72n1435_024:0332a12_2": "彌陀淨土是權。",
    "X72n1435_024:0332a12_3": "如云一念至。",
    "X72n1435_024:0332a12_4": "一心不亂是權實。",
    "X72n1435_024:0332a13_5": "淨名淨土是實。",
    "X72n1435_024:0332a13_6": "如云隨其心淨。",
    "X72n1435_024:0332a13_7": "即佛土淨。",
    "X72n1435_024:0332a13_8": "菩薩成佛時。",
    "X72n1435_024:0332a14_9": "如云直心等眾生。",
    "X72n1435_024:0332a14_10": "來生其國。",
    "X72n1435_024:0332a14_11": "是實中權。",
    "X72n1435_024:0332a14_12": "如指門必入其室。",
    "X72n1435_024:0332a15_13": "如入室必由其門。",
    "X72n1435_024:0332a15_14": "二經大意。",
    "X72n1435_024:0332a15_15": "不妨互舉。",
    "X72n1435_024:0332a16_16": "非分兩橛也。",
    "X72n1435_024:0332a16_17": "疏指事一心者。",
    "X72n1435_024:0332a16_18": "重在持鈔云若達此心。",
    "X72n1435_024:0332a17_19": "四性不生。",
    "X72n1435_024:0332a17_20": "與空慧相應。",
    "X72n1435_024:0332a17_21": "名理一心。",
    "X72n1435_024:0332a17_22": "此即事而理。",
    "X72n1435_024:0332a17_23": "安得不名惟心也。",
    "X72n1435_024:0332a19_0": "問。",
    "X72n1435_024:0332a19_1": "此經言眾生生者。",
    "X72n1435_024:0332a19_2": "其中多有一生補處。",
    "X72n1435_024:0332a19_3": "大本乃言。",
    "X72n1435_024:0332a20_0": "生彼國者。",
    "X72n1435_024:0332a20_1": "皆當一生遂補佛處。",
    "X72n1435_024:0332a20_2": "皆當之義。",
    "X72n1435_024:0332a20_3": "不止多有。",
    "X72n1435_024:0332a21_0": "然則中不胎生等。",
    "X72n1435_024:0332a21_1": "皆是補處。",
    "X72n1435_024:0332a21_2": "皆為等覺菩薩耶。",
    "X72n1435_024:0332a22_0": "師云。",
    "X72n1435_024:0332a22_1": "此經言。",
    "X72n1435_024:0332a22_2": "眾生生者。",
    "X72n1435_024:0332a22_3": "多有一生補處。",
    "X72n1435_024:0332a22_4": "此多字從近而言。",
    "X72n1435_024:0332a23_5": "大本云。",
    "X72n1435_024:0332a23_6": "皆當一生遂補佛處。",
    "X72n1435_024:0332a23_7": "此當字。",
    "X72n1435_024:0332a23_8": "藉遠而言。",
    "X72n1435_024:0332a24_0": "此經云。",
    "X72n1435_024:0332a24_1": "其國生者。",
    "X72n1435_024:0332a24_2": "皆是阿鞞跋致。",
    "X72n1435_024:0332a24_3": "華言不退轉。",
    "X72n1435_024:0332a24_4": "豈非當來遂補佛位。",
    "X72n1435_024:0332b01_5": "即中下胎生。",
    "X72n1435_024:0332b01_6": "遂補佛處。",
    "X72n1435_024:0332b01_7": "益明非是現稱等覺菩薩。",
    "X72n1435_024:0332b02_8": "良以延促同時。",
    "X72n1435_024:0332b02_9": "所謂徑中之徑。",
    "X72n1435_024:0332b02_10": "於斯益信矣。",
    "X72n1435_024:0332b04_0": "問。",
    "X72n1435_024:0332b04_1": "單念佛人。",
    "X72n1435_024:0332b04_2": "不修助因。",
    "X72n1435_024:0332b04_3": "所謂但得本莫愁末。",
    "X72n1435_024:0332b04_4": "故云不修餘行。",
    "X72n1435_024:0332b05_5": "得波羅密。",
    "X72n1435_024:0332b05_6": "亦云。",
    "X72n1435_024:0332b05_7": "即是多善多福。",
    "X72n1435_024:0332b05_8": "乃諸佛以萬行因華。",
    "X72n1435_024:0332b06_9": "莊嚴法身。",
    "X72n1435_024:0332b06_10": "今念佛所證。",
    "X72n1435_024:0332b06_11": "止可云素法身抑己具足萬行莊嚴耶。",
    "X72n1435_024:0332b08_0": "師云。",
    "X72n1435_024:0332b08_1": "單念佛人。",
    "X72n1435_024:0332b08_2": "不修助因。",
    "X72n1435_024:0332b08_3": "古人淨業中。",
    "X72n1435_024:0332b08_4": "知識殷勤化人。",
    "X72n1435_024:0332b09_5": "念佛同生淨土。",
    "X72n1435_024:0332b09_6": "豈非助因。",
    "X72n1435_024:0332b09_7": "不修餘行。",
    "X72n1435_024:0332b09_8": "惟念佛得到彼岸故。",
    "X72n1435_024:0332b10_9": "信此一門。",
    "X72n1435_024:0332b10_10": "即是多善。",
    "X72n1435_024:0332b10_11": "化彼同類。",
    "X72n1435_024:0332b10_12": "即是多福。",
    "X72n1435_024:0332b10_13": "又夙具種性。",
    "X72n1435_024:0332b11_14": "即是多善。",
    "X72n1435_024:0332b11_15": "夙修餘行。",
    "X72n1435_024:0332b11_16": "即是多福。",
    "X72n1435_024:0332b11_17": "即此已具萬行莊嚴。",
    "X72n1435_024:0332b12_18": "非素法身也。",
    "X72n1435_024:0332b13_0": "問。",
    "X72n1435_024:0332b13_1": "宗門教人。",
    "X72n1435_024:0332b13_2": "參念佛底是誰。",
    "X72n1435_024:0332b13_3": "似與別則公案無二。",
    "X72n1435_024:0332b13_4": "未嘗回向西方。",
    "X72n1435_024:0332b14_5": "鈔云。",
    "X72n1435_024:0332b14_6": "體究念佛。",
    "X72n1435_024:0332b14_7": "與尊宿教人舉話頭下。",
    "X72n1435_024:0332b15_0": "疑情意極相似。",
    "X72n1435_024:0332b15_1": "此只相似。",
    "X72n1435_024:0332b15_2": "還是直參誰字。",
    "X72n1435_024:0332b15_3": "教分四種念佛。",
    "X72n1435_024:0332b16_4": "未列體究一門。",
    "X72n1435_024:0332b16_5": "今以攝持名中。",
    "X72n1435_024:0332b16_6": "却似經文本無此意。",
    "X72n1435_024:0332b17_7": "不應以此入淨業門庭。",
    "X72n1435_024:0332b17_8": "若謂參此話頭。",
    "X72n1435_024:0332b17_9": "悟則心開。",
    "X72n1435_024:0332b18_10": "不悟亦不失往生。",
    "X72n1435_024:0332b18_11": "此為禪宗留一退步。",
    "X72n1435_024:0332b18_12": "正墮偷心耳。",
    "X72n1435_024:0332b19_13": "若謂此疑不破。",
    "X72n1435_024:0332b19_14": "便不得生。",
    "X72n1435_024:0332b19_15": "是反不如一直念去。",
    "X72n1435_024:0332b19_16": "不起疑情者。",
    "X72n1435_024:0332b20_17": "雖不開悟。",
    "X72n1435_024:0332b20_18": "尚得往生也。",
    "X72n1435_024:0332b20_19": "乃智徹禪師。",
    "X72n1435_024:0332b20_20": "直以此作淨土正行。",
    "X72n1435_024:0332b21_21": "慈照天奇毒峯。",
    "X72n1435_024:0332b21_22": "皆教人參究念佛。",
    "X72n1435_024:0332b21_23": "此諸師又何所本耶。",
    "X72n1435_024:0332b22_24": "雲棲若祖諸師疏鈔。",
    "X72n1435_024:0332b22_25": "何不直拈誰字。",
    "X72n1435_024:0332b23_26": "若只相似。",
    "X72n1435_024:0332b23_27": "又更有差別否。",
    "X72n1435_024:0332b23_28": "其相似不全是處。",
    "X72n1435_024:0332b23_29": "何不道破。",
    "X72n1435_024:0332c01_0": "師云。",
    "X72n1435_024:0332c01_1": "宗門教人參究。",
    "X72n1435_024:0332c01_2": "貴在以期大悟。",
    "X72n1435_024:0332c01_3": "更不回向西方。",
    "X72n1435_024:0332c02_0": "何得言留一退步。",
    "X72n1435_024:0332c02_1": "不失往生。",
    "X72n1435_024:0332c02_2": "是居士註脚。",
    "X72n1435_024:0332c02_3": "非宗門意。",
    "X72n1435_024:0332c03_0": "鈔中謂。",
    "X72n1435_024:0332c03_1": "體究念佛參與體者。",
    "X72n1435_024:0332c03_2": "不容無說。",
    "X72n1435_024:0332c03_3": "參謂參破。",
    "X72n1435_024:0332c03_4": "體謂體貼。",
    "X72n1435_024:0332c04_5": "體貼亦有佇思之義。",
    "X72n1435_024:0332c04_6": "宗門必不用。",
    "X72n1435_024:0332c04_7": "少林云。",
    "X72n1435_024:0332c04_8": "心如墻壁。",
    "X72n1435_024:0332c05_9": "乃可入道。",
    "X72n1435_024:0332c05_10": "又不與一直念去。",
    "X72n1435_024:0332c05_11": "較其優劣。",
    "X72n1435_024:0332c05_12": "雲棲祖諸師。",
    "X72n1435_024:0332c06_13": "亦是淨土一門。",
    "X72n1435_024:0332c06_14": "收此一類之機。",
    "X72n1435_024:0332c06_15": "放開一線。",
    "X72n1435_024:0332c06_16": "道又何辯相似不相似也。",
    "X72n1435_024:0332c08_0": "問。",
    "X72n1435_024:0332c08_1": "一切國土。",
    "X72n1435_024:0332c08_2": "惟想所持故。",
    "X72n1435_024:0332c08_3": "以淨想換却妄想。",
    "X72n1435_024:0332c08_4": "如子憶母必善想。",
    "X72n1435_024:0332c09_5": "容儀歷歷可覩。",
    "X72n1435_024:0332c09_6": "今持名一門。",
    "X72n1435_024:0332c09_7": "但令念聲相續。",
    "X72n1435_024:0332c10_8": "不取相貌。",
    "X72n1435_024:0332c10_9": "只與讀誦無二。",
    "X72n1435_024:0332c10_10": "心易馳散故。",
    "X72n1435_024:0332c10_11": "稱名方便。",
    "X72n1435_024:0332c11_0": "或依出入諸息。",
    "X72n1435_024:0332c11_1": "以為藉氣束心。",
    "X72n1435_024:0332c11_2": "乃禪經中攝心調息。",
    "X72n1435_024:0332c12_0": "諸法。",
    "X72n1435_024:0332c12_1": "似屬小乘。",
    "X72n1435_024:0332c12_2": "未為第一義諦。",
    "X72n1435_024:0332c12_3": "將非大心凡夫所當行持耶。",
    "X72n1435_024:0332c14_0": "師云。",
    "X72n1435_024:0332c14_1": "楞嚴云。",
    "X72n1435_024:0332c14_2": "憶佛念佛。",
    "X72n1435_024:0332c14_3": "謂憶念相繼。",
    "X72n1435_024:0332c14_4": "自得心開。",
    "X72n1435_024:0332c14_5": "非比單持名號。",
    "X72n1435_024:0332c15_6": "至一心不亂。",
    "X72n1435_024:0332c15_7": "夫讀誦者。",
    "X72n1435_024:0332c15_8": "惟記惟解。",
    "X72n1435_024:0332c15_9": "持名者只欲往生。",
    "X72n1435_024:0332c16_10": "如負重擔只欲到家。",
    "X72n1435_024:0332c16_11": "馳散何有。",
    "X72n1435_024:0332c16_12": "乃至一心不亂。",
    "X72n1435_024:0332c17_13": "非藉氣束心比也。",
    "X72n1435_024:0332c17_14": "生極樂國。",
    "X72n1435_024:0332c17_15": "如彈指頃。",
    "X72n1435_024:0332c17_16": "與法華其疾如風相類。",
    "X72n1435_024:0332c18_17": "大心凡夫。",
    "X72n1435_024:0332c18_18": "豈捨此捷徑法門。",
    "X72n1435_024:0332c18_19": "而別求乎。",
    "X72n1435_024:0332c20_0": "問。",
    "X72n1435_024:0332c20_1": "大本云。",
    "X72n1435_024:0332c20_2": "若有眾生。",
    "X72n1435_024:0332c20_3": "發一念心。",
    "X72n1435_024:0332c20_4": "念無量壽。",
    "X72n1435_024:0332c20_5": "定生彼國。",
    "X72n1435_024:0332c21_0": "疏中尅期。",
    "X72n1435_024:0332c21_1": "止及十念。",
    "X72n1435_024:0332c21_2": "而不及一念何耶。",
    "X72n1435_024:0332c21_3": "又念性剎那生滅。",
    "X72n1435_024:0332c22_4": "此經七日。",
    "X72n1435_024:0332c22_5": "定力乃生。",
    "X72n1435_024:0332c22_6": "則未得禪定者。",
    "X72n1435_024:0332c22_7": "無分。",
    "X72n1435_024:0332c22_8": "若此一念。",
    "X72n1435_024:0332c23_9": "如一稱成佛。",
    "X72n1435_024:0332c23_10": "釋作歸命一心。",
    "X72n1435_024:0332c23_11": "則大本不應繫十念之後。",
    "X72n1435_024:0332c24_12": "若止如經文。",
    "X72n1435_024:0332c24_13": "作一念喜愛之心。",
    "X72n1435_024:0332c24_14": "則與化經言不動如來佛剎。",
    "X72n1435_024:0333a01_15": "不以愛戀之心。",
    "X72n1435_024:0333a01_16": "遂得往者。",
    "X72n1435_024:0333a01_17": "難易不同。",
    "X72n1435_024:0333a02_0": "此則全無定力。",
    "X72n1435_024:0333a02_1": "亦得往生。",
    "X72n1435_024:0333a02_2": "其勝方便。",
    "X72n1435_024:0333a02_3": "又當超越小本耶。",
    "X72n1435_024:0333a04_0": "師云。",
    "X72n1435_024:0333a04_1": "十念與此本。",
    "X72n1435_024:0333a04_2": "相互通故。",
    "X72n1435_024:0333a04_3": "何分優劣。",
    "X72n1435_024:0333a04_4": "以一念具一切念故。",
    "X72n1435_024:0333a05_5": "一念未必為優。",
    "X72n1435_024:0333a05_6": "以十念即一念故。",
    "X72n1435_024:0333a05_7": "未必為劣。",
    "X72n1435_024:0333a06_0": "是故說一念。",
    "X72n1435_024:0333a06_1": "不妨十念。",
    "X72n1435_024:0333a06_2": "說十念。",
    "X72n1435_024:0333a06_3": "不妨一念。",
    "X72n1435_024:0333a06_4": "又剎那際不妨七日。",
    "X72n1435_024:0333a07_5": "七日不妨剎那際。",
    "X72n1435_024:0333a07_6": "經云。",
    "X72n1435_024:0333a07_7": "一念普觀無量劫。",
    "X72n1435_024:0333a08_0": "無去無來亦無住。",
    "X72n1435_024:0333a08_1": "或說一念。",
    "X72n1435_024:0333a08_2": "或說十念。",
    "X72n1435_024:0333a08_3": "或說七日。",
    "X72n1435_024:0333a08_4": "或說多劫。",
    "X72n1435_024:0333a09_5": "皆如來勝方便故。",
    "X72n1435_024:0333a09_6": "亦不論定不定喜愛不喜愛。",
    "X72n1435_024:0333a10_7": "但一心念佛。",
    "X72n1435_024:0333a10_8": "無事不辦。",
    "X72n1435_024:0333a10_9": "如靈丹一粒。",
    "X72n1435_024:0333a10_10": "點鐵成金。",
    "X72n1435_024:0333a10_11": "更無疑慮。",
    "X72n1435_024:0333a11_12": "又何必以難易。",
    "X72n1435_024:0333a11_13": "較其超越也。",
    "X72n1435_024:0333a12_0": "問。",
    "X72n1435_024:0333a12_1": "此七日若平時。",
    "X72n1435_024:0333a12_2": "姑置。",
    "X72n1435_024:0333a12_3": "待臨終方念。",
    "X72n1435_024:0333a12_4": "已為天如所呵。",
    "X72n1435_024:0333a13_0": "今既屬平時者。",
    "X72n1435_024:0333a13_1": "為是七日之後。",
    "X72n1435_024:0333a13_2": "盡此形壽。",
    "X72n1435_024:0333a13_3": "更不復亂耶。",
    "X72n1435_024:0333a14_4": "為復此後雖亂。",
    "X72n1435_024:0333a14_5": "終得往生耶。",
    "X72n1435_024:0333a14_6": "若永不復亂。",
    "X72n1435_024:0333a14_7": "不應止名七日。",
    "X72n1435_024:0333a15_8": "若更亂者。",
    "X72n1435_024:0333a15_9": "則已經退。",
    "X72n1435_024:0333a15_10": "何能感佛現前。",
    "X72n1435_024:0333a16_0": "師云。",
    "X72n1435_024:0333a16_1": "經中云一日乃至七日。",
    "X72n1435_024:0333a16_2": "是剋期往生。",
    "X72n1435_024:0333a16_3": "不論臨終平時。",
    "X72n1435_024:0333a17_4": "一聞佛名。",
    "X72n1435_024:0333a17_5": "便發猛銳七日。",
    "X72n1435_024:0333a17_6": "往生者故不論。",
    "X72n1435_024:0333a17_7": "若未生者。",
    "X72n1435_024:0333a18_8": "在無間斷念念相續。",
    "X72n1435_024:0333a18_9": "豈可七日得定再不念佛名。",
    "X72n1435_024:0333a19_10": "其執持二字。",
    "X72n1435_024:0333a19_11": "何以消文。",
    "X72n1435_024:0333a19_12": "疏中云。",
    "X72n1435_024:0333a19_13": "執者聞名受之。",
    "X72n1435_024:0333a19_14": "勇猛果決。",
    "X72n1435_024:0333a20_15": "不搖奪故。",
    "X72n1435_024:0333a20_16": "持者受斯守之。",
    "X72n1435_024:0333a20_17": "常永貞固。",
    "X72n1435_024:0333a20_18": "不遺忘故。",
    "X72n1435_024:0333a21_19": "何云七日。",
    "X72n1435_024:0333a21_20": "復隨散亂。",
    "X72n1435_024:0333a21_21": "行者一心正念。",
    "X72n1435_024:0333a21_22": "更加猛利。",
    "X72n1435_024:0333a21_23": "以終身。",
    "X72n1435_024:0333a22_24": "如初發念頃。",
    "X72n1435_024:0333a22_25": "何愁佛不感孚耶。",
    "X72n1435_024:0333a23_0": "問。",
    "X72n1435_024:0333a23_1": "鈔中明理一心。",
    "X72n1435_024:0333a23_2": "為觀力成就。",
    "X72n1435_024:0333a23_3": "則體究。",
    "X72n1435_024:0333a23_4": "全屬觀門。",
    "X72n1435_024:0333a23_5": "但前言妙觀難成故。",
    "X72n1435_024:0333a24_6": "顯持名殊勝。",
    "X72n1435_024:0333a24_7": "今乃復通觀法。",
    "X72n1435_024:0333a24_8": "仍是定觀。",
    "X72n1435_024:0333b01_9": "勝於持名矣。",
    "X72n1435_024:0333b01_10": "若云參誰字是體究。",
    "X72n1435_024:0333b01_11": "則又全屬宗門。",
    "X72n1435_024:0333b02_12": "且當參話時。",
    "X72n1435_024:0333b02_13": "不應有念。",
    "X72n1435_024:0333b02_14": "如知不二寂照難思等。",
    "X72n1435_024:0333b02_15": "幾許理路可傍。",
    "X72n1435_024:0333b03_16": "未免兩處負墮。",
    "X72n1435_024:0333b03_17": "義云何通。",
    "X72n1435_024:0333b04_0": "師云。",
    "X72n1435_024:0333b04_1": "前言妙觀難成。",
    "X72n1435_024:0333b04_2": "顯持名殊勝。",
    "X72n1435_024:0333b04_3": "良以娑婆之眾。",
    "X72n1435_024:0333b04_4": "心多散亂故。",
    "X72n1435_024:0333b05_5": "持名攝念勝乎觀門。",
    "X72n1435_024:0333b05_6": "今乃復通觀法。",
    "X72n1435_024:0333b05_7": "以觀法是淨土法門故。",
    "X72n1435_024:0333b06_8": "如持一念。",
    "X72n1435_024:0333b06_9": "不妨具足諸觀。",
    "X72n1435_024:0333b06_10": "讀彌陀經者。",
    "X72n1435_024:0333b07_11": "西方勝境。",
    "X72n1435_024:0333b07_12": "孰不冥契。",
    "X72n1435_024:0333b07_13": "但以執持顯勝故。",
    "X72n1435_024:0333b07_14": "以觀境殊勝。",
    "X72n1435_024:0333b08_15": "不妨速於持名。",
    "X72n1435_024:0333b08_16": "以持名徑捷。",
    "X72n1435_024:0333b08_17": "不妨超於觀法。",
    "X72n1435_024:0333b08_18": "兩處義成。",
    "X72n1435_024:0333b09_19": "何得言墮。",
    "X72n1435_024:0333b09_20": "若宗門參究。",
    "X72n1435_024:0333b09_21": "是逗機之法。",
    "X72n1435_024:0333b09_22": "似不必與淨土和會。",
    "X72n1435_024:0333b10_23": "如參念佛者是誰。",
    "X72n1435_024:0333b10_24": "即屬宗門。",
    "X72n1435_024:0333b10_25": "言語道斷。",
    "X72n1435_024:0333b11_0": "又不可以理路為依傍也。",
    "X72n1435_024:0333b12_0": "問。",
    "X72n1435_024:0333b12_1": "一部疏鈔。",
    "X72n1435_024:0333b12_2": "大意全重理持。",
    "X72n1435_024:0333b12_3": "則所明持法。",
    "X72n1435_024:0333b12_4": "最為要害。",
    "X72n1435_024:0333b13_0": "今既是持名。",
    "X72n1435_024:0333b13_1": "復云理觀。",
    "X72n1435_024:0333b13_2": "既是理觀。",
    "X72n1435_024:0333b13_3": "復拈話頭。",
    "X72n1435_024:0333b13_4": "禪淨止觀。",
    "X72n1435_024:0333b14_5": "三法混淆。",
    "X72n1435_024:0333b14_6": "雖復義理圓融。",
    "X72n1435_024:0333b14_7": "而行人念不歸一。",
    "X72n1435_024:0333b14_8": "將何為宗。",
    "X72n1435_024:0333b15_9": "此與一門。",
    "X72n1435_024:0333b15_10": "深入專修無間之旨。",
    "X72n1435_024:0333b15_11": "何復不侔。",
    "X72n1435_024:0333b16_0": "師云。",
    "X72n1435_024:0333b16_1": "疏鈔一部。",
    "X72n1435_024:0333b16_2": "雖則全歸理觀。",
    "X72n1435_024:0333b16_3": "如玄談守約則惟事持名。",
    "X72n1435_024:0333b17_4": "文云。",
    "X72n1435_024:0333b17_5": "舉其名兮兼眾德。",
    "X72n1435_024:0333b17_6": "而俱備。",
    "X72n1435_024:0333b17_7": "專乎持也。",
    "X72n1435_024:0333b17_8": "統百行。",
    "X72n1435_024:0333b18_9": "以無遺。",
    "X72n1435_024:0333b18_10": "以此則知專貴持名。",
    "X72n1435_024:0333b18_11": "不妨發明理觀。",
    "X72n1435_024:0333b18_12": "觀理明徹。",
    "X72n1435_024:0333b19_13": "如膏益火。",
    "X72n1435_024:0333b19_14": "則更增猛熾也。",
    "X72n1435_024:0333b19_15": "若單提參究。",
    "X72n1435_024:0333b19_16": "單論觀理。",
    "X72n1435_024:0333b20_17": "如華嚴大部攝無量乘。",
    "X72n1435_024:0333b20_18": "上根利智。",
    "X72n1435_024:0333b20_19": "條條是路。",
    "X72n1435_024:0333b20_20": "亦不名混淆。",
    "X72n1435_024:0333b21_21": "但以根器相投。",
    "X72n1435_024:0333b21_22": "亦吾師翁之善巧耳。",
    "X72n1435_024:0333b22_0": "問。",
    "X72n1435_024:0333b22_1": "疏言一心。",
    "X72n1435_024:0333b22_2": "即達磨直指之禪。",
    "X72n1435_024:0333b22_3": "又云。",
    "X72n1435_024:0333b22_4": "六祖斥無。",
    "X72n1435_024:0333b22_5": "乃門庭施設不同。",
    "X72n1435_024:0333b23_6": "假使纔弘直指。",
    "X72n1435_024:0333b23_7": "復讚西方。",
    "X72n1435_024:0333b23_8": "則直指之意。",
    "X72n1435_024:0333b24_0": "終無由明。",
    "X72n1435_024:0333b24_1": "既言即是直指。",
    "X72n1435_024:0333b24_2": "復云。",
    "X72n1435_024:0333b24_3": "為門不同。",
    "X72n1435_024:0333b24_4": "是少林與曹溪。",
    "X72n1435_024:0333c01_5": "亦復不同耶。",
    "X72n1435_024:0333c02_0": "師云。",
    "X72n1435_024:0333c02_1": "疏言一心者。",
    "X72n1435_024:0333c02_2": "豈但直指之禪。",
    "X72n1435_024:0333c02_3": "一大藏教。",
    "X72n1435_024:0333c02_4": "無不收盡。",
    "X72n1435_024:0333c03_5": "即歸之直指之禪者。",
    "X72n1435_024:0333c03_6": "此是。",
    "X72n1435_024:0333c03_7": "為參究念佛者。",
    "X72n1435_024:0333c03_8": "說非。",
    "X72n1435_024:0333c03_9": "為持名者。",
    "X72n1435_024:0333c04_10": "發機。",
    "X72n1435_024:0333c04_11": "門庭設施不同者。",
    "X72n1435_024:0333c04_12": "正符合。",
    "X72n1435_024:0333c04_13": "直指之道。",
    "X72n1435_024:0333c04_14": "亦非。",
    "X72n1435_024:0333c05_15": "為持名者。",
    "X72n1435_024:0333c05_16": "發機。",
    "X72n1435_024:0333c05_17": "雲棲以參究念佛。",
    "X72n1435_024:0333c05_18": "收之淨土一門。",
    "X72n1435_024:0333c06_0": "此是廣被機宜。",
    "X72n1435_024:0333c06_1": "看疏鈔者。",
    "X72n1435_024:0333c06_2": "不妨求一門深入。",
    "X72n1435_024:0333c06_3": "譬夫入海者。",
    "X72n1435_024:0333c07_4": "而責之淮濟江河深淺廣狹。",
    "X72n1435_024:0333c07_5": "更較其同異。",
    "X72n1435_024:0333c07_6": "不亦愚乎。",
    "X72n1435_024:0333c09_0": "問。",
    "X72n1435_024:0333c09_1": "疏指至心念佛。",
    "X72n1435_024:0333c09_2": "一聲滅八十億劫生死重罪。",
    "X72n1435_024:0333c09_3": "屬理一心。",
    "X72n1435_024:0333c10_4": "若事一心者。",
    "X72n1435_024:0333c10_5": "多念止滅少愆。",
    "X72n1435_024:0333c10_6": "乃又引佛名經言。",
    "X72n1435_024:0333c11_0": "一聞佛名。",
    "X72n1435_024:0333c11_1": "滅無量劫生死之罪。",
    "X72n1435_024:0333c11_2": "釋云。",
    "X72n1435_024:0333c11_3": "一聞則不待憶念。",
    "X72n1435_024:0333c12_4": "無量則不但八十億劫。",
    "X72n1435_024:0333c12_5": "然則何必獨指理一心也。",
    "X72n1435_024:0333c13_0": "覺於此中。",
    "X72n1435_024:0333c13_1": "自相違礙。",
    "X72n1435_024:0333c13_2": "又此經亦言聞經聞名。",
    "X72n1435_024:0333c13_3": "皆得不退。",
    "X72n1435_024:0333c14_4": "則一切等閒發願。",
    "X72n1435_024:0333c14_5": "散亂稱名者。",
    "X72n1435_024:0333c14_6": "咸不退耶。",
    "X72n1435_024:0333c15_0": "師云。",
    "X72n1435_024:0333c15_1": "果得一心。",
    "X72n1435_024:0333c15_2": "則不論理事。",
    "X72n1435_024:0333c15_3": "疏鈔謂多念止滅少愆者。",
    "X72n1435_024:0333c16_4": "此是就散亂。",
    "X72n1435_024:0333c16_5": "而藉一心者說也。",
    "X72n1435_024:0333c16_6": "聞名滅罪。",
    "X72n1435_024:0333c16_7": "眾生在迷。",
    "X72n1435_024:0333c17_8": "亦復不知。",
    "X72n1435_024:0333c17_9": "如地獄聞名。",
    "X72n1435_024:0333c17_10": "即得究竟。",
    "X72n1435_024:0333c17_11": "并獲往生者。",
    "X72n1435_024:0333c17_12": "何止滅罪。",
    "X72n1435_024:0333c18_13": "葢論眾生心力之勤怠耳。",
    "X72n1435_024:0333c18_14": "大凡教中。",
    "X72n1435_024:0333c18_15": "論事論理。",
    "X72n1435_024:0333c19_16": "論定論散。",
    "X72n1435_024:0333c19_17": "如用兵之法式。",
    "X72n1435_024:0333c19_18": "臨陣決勝。",
    "X72n1435_024:0333c19_19": "貴在當人。",
    "X72n1435_024:0333c19_20": "必不以法式楷定。",
    "X72n1435_024:0333c20_21": "然後為正論者矣。",
    "X72n1435_024:0333c21_0": "問。",
    "X72n1435_024:0333c21_1": "棗柏言。",
    "X72n1435_024:0333c21_2": "華嚴一乘大道。",
    "X72n1435_024:0333c21_3": "非往生菩薩境界。",
    "X72n1435_024:0333c21_4": "何故華嚴長子。",
    "X72n1435_024:0333c22_5": "乃以十願。",
    "X72n1435_024:0333c22_6": "導歸極樂。",
    "X72n1435_024:0333c22_7": "如生公說。",
    "X72n1435_024:0333c22_8": "闡提有佛性則後出涅槃為證。",
    "X72n1435_024:0333c23_9": "今行願全與棗柏不符。",
    "X72n1435_024:0333c23_10": "則一論宗旨竟將安歸。",
    "X72n1435_024:0333c24_11": "乃雲棲但拈出導歸之文。",
    "X72n1435_024:0333c24_12": "亦不能折棗柏之誤。",
    "X72n1435_024:0334a01_13": "當知棗柏未易輕詆。",
    "X72n1435_024:0334a01_14": "今欲和會兩義。",
    "X72n1435_024:0334a01_15": "其說云何。",
    "X72n1435_024:0334a03_0": "師云。",
    "X72n1435_024:0334a03_1": "棗柏謂華嚴非往生菩薩境界。",
    "X72n1435_024:0334a03_2": "為顯一乘。",
    "X72n1435_024:0334a03_3": "不妨抑彼揚此。",
    "X72n1435_024:0334a04_4": "普賢導歸極樂。",
    "X72n1435_024:0334a04_5": "正謂攝無量乘故。",
    "X72n1435_024:0334a04_6": "棗柏為化大心凡夫。",
    "X72n1435_024:0334a05_7": "頓入華藏故。",
    "X72n1435_024:0334a05_8": "普賢是華藏中菩薩。",
    "X72n1435_024:0334a05_9": "以十願。",
    "X72n1435_024:0334a06_10": "導歸極樂者。",
    "X72n1435_024:0334a06_11": "為三根普利故。",
    "X72n1435_024:0334a06_12": "如觀方入一隅。",
    "X72n1435_024:0334a06_13": "則十方普現故。",
    "X72n1435_024:0334a07_14": "良以大心難發。",
    "X72n1435_024:0334a07_15": "極樂易生。",
    "X72n1435_024:0334a07_16": "究竟旨歸。",
    "X72n1435_024:0334a07_17": "彼此符合。",
    "X72n1435_024:0334a08_18": "以此則知棗柏。",
    "X72n1435_024:0334a08_19": "原非錯誤。",
    "X72n1435_024:0334a08_20": "雲棲安得以是為非耶。",
    "X72n1435_024:0334a10_0": "問。",
    "X72n1435_024:0334a10_1": "因戒生定。",
    "X72n1435_024:0334a10_2": "因定生慧。",
    "X72n1435_024:0334a10_3": "則一心者。",
    "X72n1435_024:0334a10_4": "自制心始。",
    "X72n1435_024:0334a10_5": "此中自當發慧所為不假方便。",
    "X72n1435_024:0334a11_6": "自得心開也。",
    "X72n1435_024:0334a11_7": "天台念佛五門次第。",
    "X72n1435_024:0334a12_8": "亦復如是。",
    "X72n1435_024:0334a12_9": "今以事持屬定門攝。",
    "X72n1435_024:0334a12_10": "理持屬慧門攝。",
    "X72n1435_024:0334a13_0": "而云事持。",
    "X72n1435_024:0334a13_1": "未能破妄。",
    "X72n1435_024:0334a13_2": "利根徑就理持。",
    "X72n1435_024:0334a13_3": "將慧不由定。",
    "X72n1435_024:0334a13_4": "一切理路通明。",
    "X72n1435_024:0334a14_5": "便可當覺路耶。",
    "X72n1435_024:0334a15_0": "師云。",
    "X72n1435_024:0334a15_1": "因戒生定。",
    "X72n1435_024:0334a15_2": "乃至天台次第。",
    "X72n1435_024:0334a15_3": "此是教家法則。",
    "X72n1435_024:0334a15_4": "然亦有先慧而後定者。",
    "X72n1435_024:0334a16_5": "如云專持名號。",
    "X72n1435_024:0334a16_6": "即得往生。",
    "X72n1435_024:0334a16_7": "自非慧根深發。",
    "X72n1435_024:0334a17_8": "莫能信也。",
    "X72n1435_024:0334a17_9": "雲棲以事持。",
    "X72n1435_024:0334a17_10": "為定門攝。",
    "X72n1435_024:0334a17_11": "理持為慧門攝者。",
    "X72n1435_024:0334a18_12": "此亦教家法則。",
    "X72n1435_024:0334a18_13": "然事非慧而不持。",
    "X72n1435_024:0334a18_14": "理非定而不發。",
    "X72n1435_024:0334a19_15": "事持既能發慧。",
    "X72n1435_024:0334a19_16": "安得不破妄耶。",
    "X72n1435_024:0334a19_17": "又可將一句彌陀具戒定慧。",
    "X72n1435_024:0334a20_18": "猶深入理。",
    "X72n1435_024:0334a20_19": "不可不知。",
    "X72n1435_024:0334a20_20": "何也。",
    "X72n1435_024:0334a20_21": "為專持萬德洪名。",
    "X72n1435_024:0334a21_22": "不生諸惡。",
    "X72n1435_024:0334a21_23": "豈非戒也。",
    "X72n1435_024:0334a21_24": "至一心不亂。",
    "X72n1435_024:0334a21_25": "豈非定也。",
    "X72n1435_024:0334a21_26": "自得心開。",
    "X72n1435_024:0334a22_27": "豈非慧也。",
    "X72n1435_024:0334a22_28": "念空真。",
    "X72n1435_024:0334a22_29": "念緣起無生。",
    "X72n1435_024:0334a22_30": "豈非理也。",
    "X72n1435_024:0334a22_31": "深入至理。",
    "X72n1435_024:0334a23_32": "淨土惟心。",
    "X72n1435_024:0334a23_33": "生彼不離生。",
    "X72n1435_024:0334a23_34": "此是正覺地。",
    "X72n1435_024:0334a23_35": "何必捨事持而入理解。",
    "X72n1435_024:0334a24_36": "謂之覺路可乎。",
    "X72n1435_024:0334b01_0": "問。",
    "X72n1435_024:0334b01_1": "觀雖十六。",
    "X72n1435_024:0334b01_2": "言佛便周。",
    "X72n1435_024:0334b01_3": "如經所言。",
    "X72n1435_024:0334b01_4": "觀佛身故。",
    "X72n1435_024:0334b01_5": "見佛心。",
    "X72n1435_024:0334b02_0": "觀佛身者。",
    "X72n1435_024:0334b02_1": "從一相好入。",
    "X72n1435_024:0334b02_2": "則眉間白毫。",
    "X72n1435_024:0334b02_3": "可攝念佛三昧。",
    "X72n1435_024:0334b03_0": "何故慈雲。",
    "X72n1435_024:0334b03_1": "但教人作蓮花開合想。",
    "X72n1435_024:0334b03_2": "鈔中亦止通普觀為助因耶。",
    "X72n1435_024:0334b05_0": "師云。",
    "X72n1435_024:0334b05_1": "觀經言佛便周者。",
    "X72n1435_024:0334b05_2": "佛以法界為身故。",
    "X72n1435_024:0334b05_3": "觀佛身故。",
    "X72n1435_024:0334b06_0": "亦見佛心者。",
    "X72n1435_024:0334b06_1": "謂緣勝境。",
    "X72n1435_024:0334b06_2": "入實相理故。",
    "X72n1435_024:0334b06_3": "既從一相好入。",
    "X72n1435_024:0334b07_0": "毋論眉間白毫蓮花開合。",
    "X72n1435_024:0334b07_1": "以十六觀門。",
    "X72n1435_024:0334b07_2": "隨緣一觀。",
    "X72n1435_024:0334b07_3": "悉是助因。",
    "X72n1435_024:0334b08_4": "鈔中以普觀為助因者。",
    "X72n1435_024:0334b08_5": "猶為確當。",
    "X72n1435_024:0334b09_0": "問。",
    "X72n1435_024:0334b09_1": "諸經多言。",
    "X72n1435_024:0334b09_2": "念佛行人。",
    "X72n1435_024:0334b09_3": "現前見佛。",
    "X72n1435_024:0334b09_4": "如遠公三覩聖相等。",
    "X72n1435_024:0334b10_5": "所謂能念佛人。",
    "X72n1435_024:0334b10_6": "佛住其頂。",
    "X72n1435_024:0334b10_7": "古德教人。",
    "X72n1435_024:0334b10_8": "決志求驗。",
    "X72n1435_024:0334b10_9": "正在平時。",
    "X72n1435_024:0334b11_10": "今經止言臨終佛現。",
    "X72n1435_024:0334b11_11": "豈七日功成。",
    "X72n1435_024:0334b11_12": "未能現見。",
    "X72n1435_024:0334b12_0": "僅感臨終耶。",
    "X72n1435_024:0334b12_1": "抑必現前見已。",
    "X72n1435_024:0334b12_2": "然後臨終得見耶。",
    "X72n1435_024:0334b13_0": "師云。",
    "X72n1435_024:0334b13_1": "諸經多言。",
    "X72n1435_024:0334b13_2": "行人現前見佛。",
    "X72n1435_024:0334b13_3": "亦有當來見佛之語。",
    "X72n1435_024:0334b14_0": "楞嚴云。",
    "X72n1435_024:0334b14_1": "憶佛念佛。",
    "X72n1435_024:0334b14_2": "現前當來。",
    "X72n1435_024:0334b14_3": "必定見佛。",
    "X72n1435_024:0334b14_4": "其必定二字。",
    "X72n1435_024:0334b15_0": "深有旨趣。",
    "X72n1435_024:0334b15_1": "如種穀得穀。",
    "X72n1435_024:0334b15_2": "必無虗棄之功也。",
    "X72n1435_024:0334b15_3": "遠公三覩聖像。",
    "X72n1435_024:0334b16_4": "現前見佛也。",
    "X72n1435_024:0334b16_5": "淨土諸師。",
    "X72n1435_024:0334b16_6": "臨終感佛來迎。",
    "X72n1435_024:0334b16_7": "當來見佛也。",
    "X72n1435_024:0334b17_8": "由此觀之。",
    "X72n1435_024:0334b17_9": "只愁不念佛。",
    "X72n1435_024:0334b17_10": "不愁行人不見佛也。",
    "X72n1435_024:0334b17_11": "毋論平時七日。",
    "X72n1435_024:0334b18_12": "但一心不亂。",
    "X72n1435_024:0334b18_13": "專持名號。",
    "X72n1435_024:0334b18_14": "喚醒自性彌陀。",
    "X72n1435_024:0334b19_0": "一切佛菩薩像。",
    "X72n1435_024:0334b19_1": "皆影現其中也。",
    "X72n1435_024:0334b20_0": "問。",
    "X72n1435_024:0334b20_1": "往生菩薩。",
    "X72n1435_024:0334b20_2": "心不顛倒故。",
    "X72n1435_024:0334b20_3": "能預知時至。",
    "X72n1435_024:0334b20_4": "與本願相應。",
    "X72n1435_024:0334b21_0": "然則坐脫立亡。",
    "X72n1435_024:0334b21_1": "庶幾來往自由。",
    "X72n1435_024:0334b21_2": "能識死從何去者。",
    "X72n1435_024:0334b21_3": "何為古宿全不以此勘驗。",
    "X72n1435_024:0334b22_4": "至云死時何若欲先知耶。",
    "X72n1435_024:0334b23_0": "師云。",
    "X72n1435_024:0334b23_1": "淨土菩薩。",
    "X72n1435_024:0334b23_2": "與宗門坐脫立亡。",
    "X72n1435_024:0334b23_3": "識得死從何去者。",
    "X72n1435_024:0334b24_0": "大不相類。",
    "X72n1435_024:0334b24_1": "淨業行人。",
    "X72n1435_024:0334b24_2": "尅期往生。",
    "X72n1435_024:0334b24_3": "預知時至宜矣。",
    "X72n1435_024:0334b24_4": "宗門中人知亦可。",
    "X72n1435_024:0334c01_5": "不知亦可。",
    "X72n1435_024:0334c01_6": "發明大理。",
    "X72n1435_024:0334c01_7": "視死生如夢幻。",
    "X72n1435_024:0334c01_8": "安得於夢幻中著脚。",
    "X72n1435_024:0334c02_9": "以生死為實事耶。",
    "X72n1435_024:0334c02_10": "又當知化儀既畢。",
    "X72n1435_024:0334c03_11": "來去自由。",
    "X72n1435_024:0334c03_12": "此等不思議解脫。",
    "X72n1435_024:0334c03_13": "惟同道者方知。",
    "X72n1435_024:0334c03_14": "又何得與淨業。",
    "X72n1435_024:0334c04_15": "較同異耶。",
    "X72n1435_024:0334c05_0": "問。",
    "X72n1435_024:0334c05_1": "觀經十念。",
    "X72n1435_024:0334c05_2": "論明臨終心力猛利。",
    "X72n1435_024:0334c05_3": "能勝終身行力。",
    "X72n1435_024:0334c05_4": "乃大本十念。",
    "X72n1435_024:0334c06_5": "不言臨終。",
    "X72n1435_024:0334c06_6": "此與觀經。",
    "X72n1435_024:0334c06_7": "為同為別。",
    "X72n1435_024:0334c06_8": "若此七日。",
    "X72n1435_024:0334c07_0": "不必定是臨終。",
    "X72n1435_024:0334c07_1": "則此十念。",
    "X72n1435_024:0334c07_2": "亦屬平時。",
    "X72n1435_024:0334c07_3": "既非最後大心。",
    "X72n1435_024:0334c08_0": "何能化往寶王。",
    "X72n1435_024:0334c08_1": "論反以一念為正。",
    "X72n1435_024:0334c08_2": "是義何居。",
    "X72n1435_024:0334c09_0": "師云。",
    "X72n1435_024:0334c09_1": "大本十念。",
    "X72n1435_024:0334c09_2": "克十念往生。",
    "X72n1435_024:0334c09_3": "而不克往生者。",
    "X72n1435_024:0334c09_4": "乃日日十念。",
    "X72n1435_024:0334c10_5": "雖不言臨終。",
    "X72n1435_024:0334c10_6": "以至臨終明矣。",
    "X72n1435_024:0334c10_7": "論明臨終心力猛利。",
    "X72n1435_024:0334c11_8": "此為一等猶豫。",
    "X72n1435_024:0334c11_9": "行人說恐臨終障重。",
    "X72n1435_024:0334c11_10": "不克往生。",
    "X72n1435_024:0334c11_11": "以猛利勝之。",
    "X72n1435_024:0334c12_12": "能勝終身行力者。",
    "X72n1435_024:0334c12_13": "此加勉之義。",
    "X72n1435_024:0334c12_14": "使行人以遂往生。",
    "X72n1435_024:0334c13_15": "假如平日猛利。",
    "X72n1435_024:0334c13_16": "大事已辦者。",
    "X72n1435_024:0334c13_17": "十念七日。",
    "X72n1435_024:0334c13_18": "俱不出一念故。",
    "X72n1435_024:0334c14_19": "何緣自生疑難。",
    "X72n1435_024:0334c15_0": "問。",
    "X72n1435_024:0334c15_1": "觀音勢至。",
    "X72n1435_024:0334c15_2": "同侍彌陀。",
    "X72n1435_024:0334c15_3": "為西方三聖。",
    "X72n1435_024:0334c15_4": "觀音反聞自性與今持名一心。",
    "X72n1435_024:0334c16_5": "總以音聞為教體。",
    "X72n1435_024:0334c16_6": "正應同屬耳根圓通。",
    "X72n1435_024:0334c17_7": "又文殊亦發願往生。",
    "X72n1435_024:0334c17_8": "何反揀去。",
    "X72n1435_024:0334c17_9": "勢至鈔言。",
    "X72n1435_024:0334c17_10": "耳根不攝念佛。",
    "X72n1435_024:0334c18_11": "念佛能攝耳根。",
    "X72n1435_024:0334c18_12": "是勢至。",
    "X72n1435_024:0334c18_13": "能攝觀音。",
    "X72n1435_024:0334c18_14": "而觀音不攝。",
    "X72n1435_024:0334c19_15": "勢至將持名。",
    "X72n1435_024:0334c19_16": "不屬音聞。",
    "X72n1435_024:0334c19_17": "而觀音不補彌陀為安養教主耶。",
    "X72n1435_024:0334c21_0": "師云。",
    "X72n1435_024:0334c21_1": "耳根以聲塵。",
    "X72n1435_024:0334c21_2": "旋入念佛。",
    "X72n1435_024:0334c21_3": "以舌上稱揚。",
    "X72n1435_024:0334c21_4": "然俱屬音。",
    "X72n1435_024:0334c22_0": "聞出入義別。",
    "X72n1435_024:0334c22_1": "文殊取一根深入。",
    "X72n1435_024:0334c22_2": "安得不揀。",
    "X72n1435_024:0334c22_3": "雲棲判根塵同異。",
    "X72n1435_024:0334c23_4": "豈可言觀音不攝勢至耶。",
    "X72n1435_024:0334c23_5": "如論往生行業。",
    "X72n1435_024:0334c23_6": "亦不取耳根圓通。",
    "X72n1435_024:0334c24_7": "豈勢至復不攝觀音耶。",
    "X72n1435_024:0334c24_8": "正所謂打鼓弄琵琶。",
    "X72n1435_024:0335a01_9": "非以諸法門。",
    "X72n1435_024:0335a01_10": "迹上較眾聖之所行處也。",
    "X72n1435_024:0335a02_0": "問。",
    "X72n1435_024:0335a02_1": "世尊言。",
    "X72n1435_024:0335a02_2": "諸修行人。",
    "X72n1435_024:0335a02_3": "用攀緣心。",
    "X72n1435_024:0335a02_4": "為自性者。",
    "X72n1435_024:0335a02_5": "猶如煑沙。",
    "X72n1435_024:0335a03_0": "欲成嘉饌。",
    "X72n1435_024:0335a03_1": "今此念佛心。",
    "X72n1435_024:0335a03_2": "是攀緣心耶。",
    "X72n1435_024:0335a03_3": "非攀緣心耶。",
    "X72n1435_024:0335a03_4": "若用攀緣心者。",
    "X72n1435_024:0335a04_5": "一切覺觀思惟。",
    "X72n1435_024:0335a04_6": "皆是生死根本。",
    "X72n1435_024:0335a04_7": "若非攀緣心者。",
    "X72n1435_024:0335a05_8": "何言念性生滅因果殊感。",
    "X72n1435_024:0335a05_9": "若云此生滅心即不生滅心者。",
    "X72n1435_024:0335a06_10": "何云煑沙。",
    "X72n1435_024:0335a06_11": "此與波水之旨。",
    "X72n1435_024:0335a06_12": "當自不倫。",
    "X72n1435_024:0335a06_13": "波即是水。",
    "X72n1435_024:0335a07_14": "沙非是饌。",
    "X72n1435_024:0335a07_15": "大覺立喻。",
    "X72n1435_024:0335a07_16": "應不雷同。",
    "X72n1435_024:0335a07_17": "乃法華所云。",
    "X72n1435_024:0335a08_0": "若人散亂心。",
    "X72n1435_024:0335a08_1": "一稱南無佛。",
    "X72n1435_024:0335a08_2": "南能所云。",
    "X72n1435_024:0335a08_3": "不斷百思想。",
    "X72n1435_024:0335a08_4": "對境心數起者。",
    "X72n1435_024:0335a09_5": "又非即用此生滅心耶。",
    "X72n1435_024:0335a10_0": "師云。",
    "X72n1435_024:0335a10_1": "世尊斥世間人。",
    "X72n1435_024:0335a10_2": "認攀緣心為自性。",
    "X72n1435_024:0335a10_3": "非斥用攀緣心入自性。",
    "X72n1435_024:0335a11_4": "豈不聞。",
    "X72n1435_024:0335a11_5": "圓覺云。",
    "X72n1435_024:0335a11_6": "以幻修幻。",
    "X72n1435_024:0335a11_7": "天台專用六識。",
    "X72n1435_024:0335a12_0": "阿難云。",
    "X72n1435_024:0335a12_1": "供養如來。",
    "X72n1435_024:0335a12_2": "亦因此心。",
    "X72n1435_024:0335a12_3": "永退善根。",
    "X72n1435_024:0335a12_4": "亦因此心。",
    "X72n1435_024:0335a12_5": "以此推之。",
    "X72n1435_024:0335a13_6": "此心亦不惡。",
    "X72n1435_024:0335a13_7": "可以為入道之玄徑。",
    "X72n1435_024:0335a13_8": "論乎真性。",
    "X72n1435_024:0335a14_0": "何用念為論乎。",
    "X72n1435_024:0335a14_1": "樂土非念莫生。",
    "X72n1435_024:0335a14_2": "文殊云。",
    "X72n1435_024:0335a14_3": "念性生滅。",
    "X72n1435_024:0335a14_4": "此為選耳根圓通。",
    "X72n1435_024:0335a15_5": "淨業智人安得。",
    "X72n1435_024:0335a15_6": "隨文殊脚跟轉文殊。",
    "X72n1435_024:0335a16_0": "如修般舟三昧。",
    "X72n1435_024:0335a16_1": "又當以我念佛。",
    "X72n1435_024:0335a16_2": "為良導。",
    "X72n1435_024:0335a16_3": "法華一稱。",
    "X72n1435_024:0335a16_4": "塵勞起。",
    "X72n1435_024:0335a17_5": "而佛道成。",
    "X72n1435_024:0335a17_6": "南能不斷妄想興。",
    "X72n1435_024:0335a17_7": "而涅槃現。",
    "X72n1435_024:0335a17_8": "又當留待別時。",
    "X72n1435_024:0335a18_9": "向居士一一道破。",
    "X72n1435_024:0335a19_0": "問。",
    "X72n1435_024:0335a19_1": "經末先言不退。",
    "X72n1435_024:0335a19_2": "後云往生。",
    "X72n1435_024:0335a19_3": "正以現生取辦。",
    "X72n1435_024:0335a19_4": "超乎餘教。",
    "X72n1435_024:0335a20_5": "鈔中反開少壽多障。",
    "X72n1435_024:0335a20_6": "不克往生一路云。",
    "X72n1435_024:0335a20_7": "于來世得生。",
    "X72n1435_024:0335a21_8": "此墮慈照所云。",
    "X72n1435_024:0335a21_9": "其人自不知我當生淨土。",
    "X72n1435_024:0335a21_10": "却要來後世。",
    "X72n1435_024:0335a22_11": "再得生人中也。",
    "X72n1435_024:0335a22_12": "乃引禪門。",
    "X72n1435_024:0335a22_13": "纔出頭來。",
    "X72n1435_024:0335a22_14": "現成受用語為證。",
    "X72n1435_024:0335a23_15": "則何以永明揀去。",
    "X72n1435_024:0335a23_16": "有禪無淨。",
    "X72n1435_024:0335a23_17": "一流明淨業之諦。",
    "X72n1435_024:0335a24_18": "當於宗門耶。",
    "X72n1435_024:0335b01_0": "師云。",
    "X72n1435_024:0335b01_1": "經中先言不退。",
    "X72n1435_024:0335b01_2": "後云往生者。",
    "X72n1435_024:0335b01_3": "謂先說淨土已生者。",
    "X72n1435_024:0335b02_4": "後云念佛必定往生。",
    "X72n1435_024:0335b02_5": "非現生取證也。",
    "X72n1435_024:0335b02_6": "鈔中開少壽多障。",
    "X72n1435_024:0335b03_7": "為多障行人不信決定往生。",
    "X72n1435_024:0335b03_8": "如信者則不障矣。",
    "X72n1435_024:0335b04_0": "來世得生者。",
    "X72n1435_024:0335b04_1": "謂不信。",
    "X72n1435_024:0335b04_2": "聞名亦種下。",
    "X72n1435_024:0335b04_3": "來世種子顯。",
    "X72n1435_024:0335b04_4": "聞名殊勝。",
    "X72n1435_024:0335b05_5": "超乎餘教故。",
    "X72n1435_024:0335b05_6": "不墮慈照之語。",
    "X72n1435_024:0335b05_7": "永明抑揚之說。",
    "X72n1435_024:0335b05_8": "單扶淨土一路。",
    "X72n1435_024:0335b06_9": "將宗門推向。",
    "X72n1435_024:0335b06_10": "萬丈深坑。",
    "X72n1435_024:0335b06_11": "亦不為分外禪門有。",
    "X72n1435_024:0335b07_12": "三生打徹故。",
    "X72n1435_024:0335b07_13": "云纔出頭來。",
    "X72n1435_024:0335b07_14": "現成受用。",
    "X72n1435_024:0335b07_15": "又何勞逐句。",
    "X72n1435_024:0335b08_16": "與淨土合轍。",
    "X72n1435_024:0335b09_0": "問。",
    "X72n1435_024:0335b09_1": "準提密圓與華嚴顯圓。",
    "X72n1435_024:0335b09_2": "並屬第一。",
    "X72n1435_024:0335b09_3": "疏云。",
    "X72n1435_024:0335b09_4": "持名功德猶勝準提。",
    "X72n1435_024:0335b10_5": "今念佛人。",
    "X72n1435_024:0335b10_6": "盡此報身。",
    "X72n1435_024:0335b10_7": "方得往生。",
    "X72n1435_024:0335b10_8": "所證極果。",
    "X72n1435_024:0335b11_0": "僅至上品。",
    "X72n1435_024:0335b11_1": "何以不如準提所開。",
    "X72n1435_024:0335b11_2": "不轉肉身。",
    "X72n1435_024:0335b11_3": "便得往詣十方淨土。",
    "X72n1435_024:0335b12_4": "只于此生。",
    "X72n1435_024:0335b12_5": "得證佛果耶。",
    "X72n1435_024:0335b13_0": "師云。",
    "X72n1435_024:0335b13_1": "佛所設教。",
    "X72n1435_024:0335b13_2": "為當機者極成。",
    "X72n1435_024:0335b13_3": "如此土釋經者。",
    "X72n1435_024:0335b13_4": "亦復如是。",
    "X72n1435_024:0335b14_5": "天台歸圓法華。",
    "X72n1435_024:0335b14_6": "李長者亦多料揀。",
    "X72n1435_024:0335b14_7": "李長者必看天台三大部。",
    "X72n1435_024:0335b15_8": "天台未見李長者合論。",
    "X72n1435_024:0335b15_9": "若見時。",
    "X72n1435_024:0335b15_10": "又不知當何如。",
    "X72n1435_024:0335b16_11": "華嚴準提及淨土法門。",
    "X72n1435_024:0335b16_12": "各有所主。",
    "X72n1435_024:0335b16_13": "不可逐一比況。",
    "X72n1435_024:0335b17_14": "古德云。",
    "X72n1435_024:0335b17_15": "一兔橫身當古路。",
    "X72n1435_024:0335b17_16": "蒼鷹纔見便生擒。",
    "X72n1435_024:0335b17_17": "似不必向迹上追尋。",
    "X72n1435_024:0335b18_18": "夙具靈根者。",
    "X72n1435_024:0335b18_19": "纔聞著一言一句。",
    "X72n1435_024:0335b18_20": "便有出身路。",
    "X72n1435_024:0335b19_21": "所謂大藏小藏。",
    "X72n1435_024:0335b19_22": "從自心中流出。",
    "X72n1435_024:0335b19_23": "豈可以部帙。",
    "X72n1435_024:0335b20_24": "較優劣耶。",
    "X72n1435_024:0335b22_0": "無異禪師廣錄卷第二十四"
}