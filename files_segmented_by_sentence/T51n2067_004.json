{
    "T51n2067_004:0021c06_0": "弘贊法花傳卷第四",
    "T51n2067_004:0021c08_0": "藍谷沙門慧詳撰",
    "T51n2067_004:0021c09_0": "修觀第四",
    "T51n2067_004:0021c10_0": "陳南岳禪慧思隋天台山釋智顗",
    "T51n2067_004:0021c11_0": "唐天台山釋智璪",
    "T51n2067_004:0021c12_0": "釋慧思。",
    "T51n2067_004:0021c12_1": "俗姓李氏。",
    "T51n2067_004:0021c12_2": "武津人也。",
    "T51n2067_004:0021c12_3": "少以慈恕。",
    "T51n2067_004:0021c12_4": "知名閭里。",
    "T51n2067_004:0021c13_5": "甞數夢梵僧勸令出俗。",
    "T51n2067_004:0021c13_6": "駭悟斯瑞。",
    "T51n2067_004:0021c13_7": "辭親入道。",
    "T51n2067_004:0021c14_8": "所投之寺。",
    "T51n2067_004:0021c14_9": "非是鍊居。",
    "T51n2067_004:0021c14_10": "乃感神僧訓令齋戒。",
    "T51n2067_004:0021c15_11": "奉持守素。",
    "T51n2067_004:0021c15_12": "日惟一食。",
    "T51n2067_004:0021c15_13": "不受別供。",
    "T51n2067_004:0021c15_14": "周旋迎送。",
    "T51n2067_004:0021c16_15": "都皆杜絕。",
    "T51n2067_004:0021c16_16": "年登三十。",
    "T51n2067_004:0021c16_17": "在一空澤。",
    "T51n2067_004:0021c16_18": "立志誦法花經。",
    "T51n2067_004:0021c17_19": "誦之始半。",
    "T51n2067_004:0021c17_20": "忽有潛流漂漲。",
    "T51n2067_004:0021c17_21": "處處淹漬。",
    "T51n2067_004:0021c17_22": "沒所坐床。",
    "T51n2067_004:0021c18_23": "及至身半。",
    "T51n2067_004:0021c18_24": "俄有遍體浮腫。",
    "T51n2067_004:0021c18_25": "不堪動運。",
    "T51n2067_004:0021c19_0": "乃立誓而言曰。",
    "T51n2067_004:0021c19_1": "我於此經。",
    "T51n2067_004:0021c19_2": "必有緣者。",
    "T51n2067_004:0021c19_3": "水當消滅。",
    "T51n2067_004:0021c20_4": "疾亦當差。",
    "T51n2067_004:0021c20_5": "如其無緣。",
    "T51n2067_004:0021c20_6": "水有重益。",
    "T51n2067_004:0021c20_7": "即於爾夜。",
    "T51n2067_004:0021c21_8": "水遂減耗。",
    "T51n2067_004:0021c21_9": "身疾亦愈。",
    "T51n2067_004:0021c21_10": "即停此處十年。",
    "T51n2067_004:0021c21_11": "誦經閉目。",
    "T51n2067_004:0021c22_12": "便見釋迦彌勒來為說法。",
    "T51n2067_004:0021c22_13": "時覩遠近山陵。",
    "T51n2067_004:0021c23_14": "坦無高下。",
    "T51n2067_004:0021c23_15": "若斂念誦經。",
    "T51n2067_004:0021c23_16": "其七卷諸品。",
    "T51n2067_004:0021c23_17": "行句字義。",
    "T51n2067_004:0021c24_18": "歷然覩見。",
    "T51n2067_004:0021c24_19": "後移往陶丘山。",
    "T51n2067_004:0021c24_20": "山前誦經之處。",
    "T51n2067_004:0021c25_21": "甚多林木。",
    "T51n2067_004:0021c25_22": "俗人遇有侵伐。",
    "T51n2067_004:0021c25_23": "即感癩病。",
    "T51n2067_004:0021c25_24": "祈請還差。",
    "T51n2067_004:0021c26_25": "又於一夏。",
    "T51n2067_004:0021c26_26": "行法花懺。",
    "T51n2067_004:0021c26_27": "唯行及坐。",
    "T51n2067_004:0021c26_28": "脅不至床。",
    "T51n2067_004:0021c27_29": "夏竟。",
    "T51n2067_004:0021c27_30": "歎曰。",
    "T51n2067_004:0021c27_31": "吾一夏勤苦。",
    "T51n2067_004:0021c27_32": "空無所獲。",
    "T51n2067_004:0021c27_33": "方欲放身。",
    "T51n2067_004:0021c28_34": "倚憑繩床。",
    "T51n2067_004:0021c28_35": "豁然開朗。",
    "T51n2067_004:0021c28_36": "心意明徹。",
    "T51n2067_004:0021c28_37": "證入法門。",
    "T51n2067_004:0021c29_38": "未敢自信。",
    "T51n2067_004:0021c29_39": "試讀大智度論初卷。",
    "T51n2067_004:0021c29_40": "即便心悟。",
    "T51n2067_004:0022a01_41": "一不遺忘。",
    "T51n2067_004:0022a01_42": "兼識言下之旨。",
    "T51n2067_004:0022a01_43": "如是遂讀通一百卷。",
    "T51n2067_004:0022a02_44": "並能誦記。",
    "T51n2067_004:0022a02_45": "明解義味。",
    "T51n2067_004:0022a02_46": "自後誦念之暇。",
    "T51n2067_004:0022a03_0": "多講釋論及法花經。",
    "T51n2067_004:0022a03_1": "思知齊曆告終。",
    "T51n2067_004:0022a03_2": "乃託身陳國。",
    "T51n2067_004:0022a04_3": "即入衡岳花蓋峯下。",
    "T51n2067_004:0022a04_4": "立寺行道。",
    "T51n2067_004:0022a04_5": "初見一捕鳥人。",
    "T51n2067_004:0022a05_6": "掘地施摾。",
    "T51n2067_004:0022a05_7": "乃往告云。",
    "T51n2067_004:0022a05_8": "淺掘淺掘。",
    "T51n2067_004:0022a05_9": "傷我髑髏。",
    "T51n2067_004:0022a06_10": "入地未深。",
    "T51n2067_004:0022a06_11": "遂得白骨一具。",
    "T51n2067_004:0022a06_12": "捕人怪異。",
    "T51n2067_004:0022a06_13": "請問慇懃。",
    "T51n2067_004:0022a07_14": "思乃答云。",
    "T51n2067_004:0022a07_15": "我已二生。",
    "T51n2067_004:0022a07_16": "居此峯下。",
    "T51n2067_004:0022a07_17": "誦法花經。",
    "T51n2067_004:0022a08_18": "捨身於此。",
    "T51n2067_004:0022a08_19": "前身骸骨。",
    "T51n2067_004:0022a08_20": "並已消亡。",
    "T51n2067_004:0022a08_21": "今生見者。",
    "T51n2067_004:0022a09_22": "乃是第二身耳。",
    "T51n2067_004:0022a09_23": "所止菴舍。",
    "T51n2067_004:0022a09_24": "野人所焚。",
    "T51n2067_004:0022a09_25": "遂顯癘疾。",
    "T51n2067_004:0022a10_26": "投誠歸懺。",
    "T51n2067_004:0022a10_27": "既受草室。",
    "T51n2067_004:0022a10_28": "持經如故。",
    "T51n2067_004:0022a10_29": "其人不久。",
    "T51n2067_004:0022a11_30": "所患平復。",
    "T51n2067_004:0022a11_31": "又夢梵僧數百形服瓌異。",
    "T51n2067_004:0022a12_0": "上坐命曰。",
    "T51n2067_004:0022a12_1": "汝先受戒。",
    "T51n2067_004:0022a12_2": "律儀非勝。",
    "T51n2067_004:0022a12_3": "既遇清眾。",
    "T51n2067_004:0022a12_4": "宜更翻壇祈請。",
    "T51n2067_004:0022a13_5": "師僧三十二人。",
    "T51n2067_004:0022a13_6": "加羯磨法。",
    "T51n2067_004:0022a13_7": "具足成就。",
    "T51n2067_004:0022a14_8": "後忽驚悟。",
    "T51n2067_004:0022a14_9": "方知夢受。",
    "T51n2067_004:0022a14_10": "自斯已後。",
    "T51n2067_004:0022a14_11": "勤務更深。",
    "T51n2067_004:0022a15_12": "由此苦行。",
    "T51n2067_004:0022a15_13": "得見三生所行道事。",
    "T51n2067_004:0022a15_14": "又夢彌勒彌陀說法開悟。",
    "T51n2067_004:0022a16_15": "故造二像。",
    "T51n2067_004:0022a16_16": "竝而供養。",
    "T51n2067_004:0022a16_17": "又夢隨從彌勒。",
    "T51n2067_004:0022a17_18": "與諸眷屬。",
    "T51n2067_004:0022a17_19": "同會龍花。",
    "T51n2067_004:0022a17_20": "心自惟曰。",
    "T51n2067_004:0022a17_21": "我於釋迦末法。",
    "T51n2067_004:0022a18_22": "受持法花。",
    "T51n2067_004:0022a18_23": "今值慈尊。",
    "T51n2067_004:0022a18_24": "感傷悲泣。",
    "T51n2067_004:0022a19_0": "豁然覺悟。",
    "T51n2067_004:0022a19_1": "轉復精進。",
    "T51n2067_004:0022a19_2": "又以道俗福施。",
    "T51n2067_004:0022a19_3": "造金字法花。",
    "T51n2067_004:0022a20_4": "瑠璃寶函。",
    "T51n2067_004:0022a20_5": "莊嚴炫曜。",
    "T51n2067_004:0022a20_6": "功德傑異。",
    "T51n2067_004:0022a20_7": "大發眾心。",
    "T51n2067_004:0022a21_8": "又講此經。",
    "T51n2067_004:0022a21_9": "隨文造書。",
    "T51n2067_004:0022a21_10": "莫非幽蹟。",
    "T51n2067_004:0022a21_11": "後命學士智顗。",
    "T51n2067_004:0022a22_12": "代講金經。",
    "T51n2067_004:0022a22_13": "至一心具萬行處。",
    "T51n2067_004:0022a22_14": "顗有疑焉。",
    "T51n2067_004:0022a23_15": "思為釋曰。",
    "T51n2067_004:0022a23_16": "汝向所疑。",
    "T51n2067_004:0022a23_17": "此乃大品次第意爾。",
    "T51n2067_004:0022a24_0": "未是法花圓頓旨也。",
    "T51n2067_004:0022a24_1": "吾昔夏中。",
    "T51n2067_004:0022a24_2": "苦節思此。",
    "T51n2067_004:0022a24_3": "後夜一念頓發諸法。",
    "T51n2067_004:0022a25_4": "吾既身證。",
    "T51n2067_004:0022a25_5": "不勞致疑。",
    "T51n2067_004:0022a25_6": "顗即諮受法花行法。",
    "T51n2067_004:0022a26_7": "三七境界。",
    "T51n2067_004:0022a26_8": "難卒載敘。",
    "T51n2067_004:0022a26_9": "每年。",
    "T51n2067_004:0022a27_0": "陳主三信參勞。",
    "T51n2067_004:0022a27_1": "供填眾積。",
    "T51n2067_004:0022a27_2": "榮盛莫加。",
    "T51n2067_004:0022a27_3": "說法倍常。",
    "T51n2067_004:0022a28_4": "神異難測。",
    "T51n2067_004:0022a28_5": "或現形小大。",
    "T51n2067_004:0022a28_6": "或寂爾藏身。",
    "T51n2067_004:0022a28_7": "或異香奇色。",
    "T51n2067_004:0022a29_8": "祥瑞亂舉。",
    "T51n2067_004:0022a29_9": "臨將終時。",
    "T51n2067_004:0022a29_10": "從山頂下半山道場。",
    "T51n2067_004:0022b01_11": "大集門學。",
    "T51n2067_004:0022b01_12": "連日說法。",
    "T51n2067_004:0022b01_13": "苦切呵責。",
    "T51n2067_004:0022b01_14": "聞者寒心。",
    "T51n2067_004:0022b02_15": "告眾人曰。",
    "T51n2067_004:0022b02_16": "若有十人。",
    "T51n2067_004:0022b02_17": "不惜身命。",
    "T51n2067_004:0022b02_18": "常修法花三昧。",
    "T51n2067_004:0022b03_19": "方等懺悔。",
    "T51n2067_004:0022b03_20": "常坐常行者。",
    "T51n2067_004:0022b03_21": "隨有所須。",
    "T51n2067_004:0022b04_0": "吾自供給。",
    "T51n2067_004:0022b04_1": "必須利益。",
    "T51n2067_004:0022b04_2": "如無此人。",
    "T51n2067_004:0022b04_3": "吾當遠去。",
    "T51n2067_004:0022b04_4": "苦行事難。",
    "T51n2067_004:0022b05_5": "竟無答者。",
    "T51n2067_004:0022b05_6": "因屏眾斂念。",
    "T51n2067_004:0022b05_7": "俄然命盡。",
    "T51n2067_004:0022b05_8": "咸聞異香。",
    "T51n2067_004:0022b06_9": "滿於室內。",
    "T51n2067_004:0022b06_10": "頂煙身輕。",
    "T51n2067_004:0022b06_11": "顏色如常。",
    "T51n2067_004:0022b07_0": "即陳太建九年六月二十二日也。",
    "T51n2067_004:0022b07_1": "春秋六十有四。",
    "T51n2067_004:0022b08_2": "然而身相挺特。",
    "T51n2067_004:0022b08_3": "能自勝持。",
    "T51n2067_004:0022b08_4": "不倚不斜。",
    "T51n2067_004:0022b08_5": "牛行象視。",
    "T51n2067_004:0022b09_6": "頂有肉髻。",
    "T51n2067_004:0022b09_7": "異相莊嚴。",
    "T51n2067_004:0022b09_8": "見者迴心。",
    "T51n2067_004:0022b09_9": "不覺傾伏。",
    "T51n2067_004:0022b10_10": "又善識人心。",
    "T51n2067_004:0022b10_11": "鑒照冥伏訥於言過。",
    "T51n2067_004:0022b10_12": "方便誨引。",
    "T51n2067_004:0022b11_13": "行大慈悲。",
    "T51n2067_004:0022b11_14": "奉菩薩戒。",
    "T51n2067_004:0022b11_15": "至如繒纊皮革。",
    "T51n2067_004:0022b11_16": "多由損生。",
    "T51n2067_004:0022b12_17": "故其徒屬服章。",
    "T51n2067_004:0022b12_18": "率加以布。",
    "T51n2067_004:0022b12_19": "寒即艾衲。",
    "T51n2067_004:0022b13_0": "用犯風霜。",
    "T51n2067_004:0022b13_1": "自佛法東流。",
    "T51n2067_004:0022b13_2": "幾六百載。",
    "T51n2067_004:0022b13_3": "惟斯南岳慈行可歸。",
    "T51n2067_004:0022b14_4": "所著四十二字門兩卷。",
    "T51n2067_004:0022b14_5": "無諍行門兩卷。",
    "T51n2067_004:0022b15_6": "釋論玄隨自意安樂行次第禪要三智觀等。",
    "T51n2067_004:0022b16_7": "五部各一卷。",
    "T51n2067_004:0022b16_8": "並行於世。",
    "T51n2067_004:0022b17_0": "釋智顗。",
    "T51n2067_004:0022b17_1": "字德安。",
    "T51n2067_004:0022b17_2": "姓陳氏。",
    "T51n2067_004:0022b17_3": "頴川人也。",
    "T51n2067_004:0022b17_4": "有晉遷都。",
    "T51n2067_004:0022b18_5": "寓居荊州之花容焉。",
    "T51n2067_004:0022b18_6": "即梁散騎益陽公起祖之第二子也。",
    "T51n2067_004:0022b19_7": "母徐氏。",
    "T51n2067_004:0022b19_8": "夢香煙五彩。",
    "T51n2067_004:0022b19_9": "縈迴在懷。",
    "T51n2067_004:0022b20_10": "欲拂去之。",
    "T51n2067_004:0022b20_11": "聞人語曰。",
    "T51n2067_004:0022b20_12": "宿世因緣。",
    "T51n2067_004:0022b20_13": "寄託弘道。",
    "T51n2067_004:0022b21_14": "福德自至。",
    "T51n2067_004:0022b21_15": "何以去之。",
    "T51n2067_004:0022b21_16": "又夢吞白鼠。",
    "T51n2067_004:0022b21_17": "如是再三。",
    "T51n2067_004:0022b22_18": "怪而卜之。",
    "T51n2067_004:0022b22_19": "師曰。",
    "T51n2067_004:0022b22_20": "白龍之兆也。",
    "T51n2067_004:0022b22_21": "及誕育之夜。",
    "T51n2067_004:0022b23_22": "室內洞明。",
    "T51n2067_004:0022b23_23": "信宿之間。",
    "T51n2067_004:0022b23_24": "其光乃止。",
    "T51n2067_004:0022b23_25": "內外胥悅。",
    "T51n2067_004:0022b24_26": "盛陳鼎爼。",
    "T51n2067_004:0022b24_27": "遂火滅湯冷。",
    "T51n2067_004:0022b24_28": "為事不成。",
    "T51n2067_004:0022b24_29": "忽有二僧。",
    "T51n2067_004:0022b25_30": "扣門曰。",
    "T51n2067_004:0022b25_31": "善哉兒德所熏。",
    "T51n2067_004:0022b25_32": "必出家也。",
    "T51n2067_004:0022b25_33": "言訖而隱。",
    "T51n2067_004:0022b26_34": "賓客異焉。",
    "T51n2067_004:0022b26_35": "兼以臥便合掌。",
    "T51n2067_004:0022b26_36": "坐必面西。",
    "T51n2067_004:0022b26_37": "年大已來。",
    "T51n2067_004:0022b27_38": "口不忘噉。",
    "T51n2067_004:0022b27_39": "見像便禮。",
    "T51n2067_004:0022b27_40": "逢僧必敬。",
    "T51n2067_004:0022b27_41": "七歲。",
    "T51n2067_004:0022b27_42": "憙往伽藍。",
    "T51n2067_004:0022b28_43": "諸僧訝其情志。",
    "T51n2067_004:0022b28_44": "口授普門品。",
    "T51n2067_004:0022b28_45": "初契一遍即得。",
    "T51n2067_004:0022b29_46": "年十有八。",
    "T51n2067_004:0022b29_47": "投湘州果願寺沙門法緒。",
    "T51n2067_004:0022c01_0": "而出家焉。",
    "T51n2067_004:0022c01_1": "因潛大賢山。",
    "T51n2067_004:0022c01_2": "誦法花經。",
    "T51n2067_004:0022c01_3": "及無量義普賢觀等。",
    "T51n2067_004:0022c02_4": "二旬未浹。",
    "T51n2067_004:0022c02_5": "三部究竟。",
    "T51n2067_004:0022c02_6": "又詣光州大蘇山慧思禪師。",
    "T51n2067_004:0022c03_7": "受業止觀。",
    "T51n2067_004:0022c03_8": "思又從道於就師。",
    "T51n2067_004:0022c04_0": "就又受法於最師。",
    "T51n2067_004:0022c04_1": "此三人者。",
    "T51n2067_004:0022c04_2": "皆不測其位也。",
    "T51n2067_004:0022c05_0": "思每歎曰。",
    "T51n2067_004:0022c05_1": "昔在靈山。",
    "T51n2067_004:0022c05_2": "同聽法花。",
    "T51n2067_004:0022c05_3": "宿緣所追。",
    "T51n2067_004:0022c05_4": "今復來矣。",
    "T51n2067_004:0022c06_5": "即示普賢道場。",
    "T51n2067_004:0022c06_6": "為說四安樂行。",
    "T51n2067_004:0022c06_7": "顗乃於此山。",
    "T51n2067_004:0022c07_8": "行法花三昧。",
    "T51n2067_004:0022c07_9": "始經三夕。",
    "T51n2067_004:0022c07_10": "誦至藥王品。",
    "T51n2067_004:0022c08_11": "心緣苦行。",
    "T51n2067_004:0022c08_12": "至是真精進句。",
    "T51n2067_004:0022c08_13": "解悟便發。",
    "T51n2067_004:0022c08_14": "見共思師處靈鷲山七寶淨土。",
    "T51n2067_004:0022c09_15": "聽佛說法。",
    "T51n2067_004:0022c09_16": "故思云。",
    "T51n2067_004:0022c10_17": "非爾不感。",
    "T51n2067_004:0022c10_18": "非我莫識。",
    "T51n2067_004:0022c10_19": "此法花三昧前方便也。",
    "T51n2067_004:0022c11_20": "又入洍州白沙山。",
    "T51n2067_004:0022c11_21": "如前入觀。",
    "T51n2067_004:0022c11_22": "於經有疑。",
    "T51n2067_004:0022c11_23": "輒見思來冥為披釋。",
    "T51n2067_004:0022c12_24": "爾後常令代講。",
    "T51n2067_004:0022c12_25": "聞者伏之。",
    "T51n2067_004:0022c13_0": "即往天台。",
    "T51n2067_004:0022c13_1": "於寺北花頂峯。",
    "T51n2067_004:0022c13_2": "獨靜頭陀。",
    "T51n2067_004:0022c13_3": "忽大風拔木。",
    "T51n2067_004:0022c14_4": "雷霆震吼。",
    "T51n2067_004:0022c14_5": "魅千群。",
    "T51n2067_004:0022c14_6": "一形百杖。",
    "T51n2067_004:0022c14_7": "吐大聲叫。",
    "T51n2067_004:0022c15_8": "駭畏難陳。",
    "T51n2067_004:0022c15_9": "乃抑心安忍。",
    "T51n2067_004:0022c15_10": "湛然自失。",
    "T51n2067_004:0022c15_11": "又患身心煩痛。",
    "T51n2067_004:0022c16_12": "如被火燒。",
    "T51n2067_004:0022c16_13": "又見亡歿二親。",
    "T51n2067_004:0022c16_14": "枕顗膝上。",
    "T51n2067_004:0022c17_15": "陳苦求哀。",
    "T51n2067_004:0022c17_16": "顗又依止法忍。",
    "T51n2067_004:0022c17_17": "不動如山。",
    "T51n2067_004:0022c17_18": "故使強輕兩緣所感便滅。",
    "T51n2067_004:0022c18_19": "忽致西域神僧告曰。",
    "T51n2067_004:0022c18_20": "制敵勝怨。",
    "T51n2067_004:0022c19_21": "乃可為勇。",
    "T51n2067_004:0022c19_22": "文多不載。",
    "T51n2067_004:0022c19_23": "自後廣流禪慧。",
    "T51n2067_004:0022c20_24": "學者如林。",
    "T51n2067_004:0022c20_25": "當時名匠。",
    "T51n2067_004:0022c20_26": "伏膺相繁。",
    "T51n2067_004:0022c20_27": "陳隋二代帝主后妃。",
    "T51n2067_004:0022c21_28": "咸受歸戒。",
    "T51n2067_004:0022c21_29": "供施殷積。",
    "T51n2067_004:0022c21_30": "後往石城寺。",
    "T51n2067_004:0022c22_0": "於佛前。",
    "T51n2067_004:0022c22_1": "將就來報。",
    "T51n2067_004:0022c22_2": "施床東壁。",
    "T51n2067_004:0022c22_3": "面向西方。",
    "T51n2067_004:0022c22_4": "稱阿彌陀佛。",
    "T51n2067_004:0022c23_5": "波若觀音。",
    "T51n2067_004:0022c23_6": "時有欲進藥者。",
    "T51n2067_004:0022c23_7": "答曰。",
    "T51n2067_004:0022c23_8": "藥能遣病。",
    "T51n2067_004:0022c24_9": "以留殘年乎。",
    "T51n2067_004:0022c24_10": "病不與身合。",
    "T51n2067_004:0022c24_11": "藥何所遣。",
    "T51n2067_004:0022c24_12": "年不與心合。",
    "T51n2067_004:0022c25_13": "藥何所留。",
    "T51n2067_004:0022c25_14": "智晞往日。",
    "T51n2067_004:0022c25_15": "復何所聞。",
    "T51n2067_004:0022c26_0": "觀心論內。",
    "T51n2067_004:0022c26_1": "復何所道。",
    "T51n2067_004:0022c26_2": "紛紜醫藥。",
    "T51n2067_004:0022c26_3": "累擾於他。",
    "T51n2067_004:0022c26_4": "吾生勞毒器。",
    "T51n2067_004:0022c27_5": "死悅休歸。",
    "T51n2067_004:0022c27_6": "世相如是。",
    "T51n2067_004:0022c27_7": "不足多歎。",
    "T51n2067_004:0022c27_8": "便令唱法花經題。",
    "T51n2067_004:0022c28_9": "顗贊引曰。",
    "T51n2067_004:0022c28_10": "法門父母。",
    "T51n2067_004:0022c28_11": "慧解由生。",
    "T51n2067_004:0022c29_12": "本迹弘大。",
    "T51n2067_004:0022c29_13": "微妙難測。",
    "T51n2067_004:0022c29_14": "輟斧絕絃於今日矣。",
    "T51n2067_004:0023a01_0": "又索香湯漱口。",
    "T51n2067_004:0023a01_1": "說十如。",
    "T51n2067_004:0023a01_2": "四不生。",
    "T51n2067_004:0023a01_3": "十法界。",
    "T51n2067_004:0023a01_4": "三觀。",
    "T51n2067_004:0023a02_5": "四教。",
    "T51n2067_004:0023a02_6": "四無量。",
    "T51n2067_004:0023a02_7": "六度等。",
    "T51n2067_004:0023a02_8": "有問其位者。",
    "T51n2067_004:0023a02_9": "答曰。",
    "T51n2067_004:0023a03_10": "汝等嬾種善根。",
    "T51n2067_004:0023a03_11": "問他功德。",
    "T51n2067_004:0023a03_12": "如旨問孔蹶者訪路(云云)吾不領眾。",
    "T51n2067_004:0023a04_13": "必淨六根。",
    "T51n2067_004:0023a04_14": "為他損己。",
    "T51n2067_004:0023a04_15": "只是五品內位耳。",
    "T51n2067_004:0023a05_16": "又勅維那。",
    "T51n2067_004:0023a05_17": "人命將終。",
    "T51n2067_004:0023a05_18": "聞鍾磬聲。",
    "T51n2067_004:0023a06_19": "增其正念。",
    "T51n2067_004:0023a06_20": "唯長久氣盡為期。",
    "T51n2067_004:0023a06_21": "云何身冷。",
    "T51n2067_004:0023a06_22": "方復響磬。",
    "T51n2067_004:0023a07_23": "世間哭泣著服。",
    "T51n2067_004:0023a07_24": "皆不應作。",
    "T51n2067_004:0023a07_25": "且各默然。",
    "T51n2067_004:0023a08_0": "吾將去矣。",
    "T51n2067_004:0023a08_1": "言訖。",
    "T51n2067_004:0023a08_2": "端坐如入定。",
    "T51n2067_004:0023a08_3": "而卒於天台山大石像前春秋六十有七。",
    "T51n2067_004:0023a09_4": "即開皇十七年十一月二十二日也。",
    "T51n2067_004:0023a10_5": "滅後依於遺教而殮焉。",
    "T51n2067_004:0023a10_6": "至仁壽末年已前。",
    "T51n2067_004:0023a11_7": "忽振錫披衣。",
    "T51n2067_004:0023a11_8": "猶如平昔。",
    "T51n2067_004:0023a11_9": "凡經七現。",
    "T51n2067_004:0023a12_10": "重降山寺。",
    "T51n2067_004:0023a12_11": "一還佛壟。",
    "T51n2067_004:0023a12_12": "語弟子曰。",
    "T51n2067_004:0023a12_13": "案行故業。",
    "T51n2067_004:0023a13_14": "各安隱耶。",
    "T51n2067_004:0023a13_15": "舉眾皆見。",
    "T51n2067_004:0023a13_16": "悲敬言問。",
    "T51n2067_004:0023a13_17": "良久而隱。",
    "T51n2067_004:0023a14_18": "所著。",
    "T51n2067_004:0023a14_19": "法花疏。",
    "T51n2067_004:0023a14_20": "止觀門。",
    "T51n2067_004:0023a14_21": "修禪法等。",
    "T51n2067_004:0023a14_22": "各數十卷。",
    "T51n2067_004:0023a15_23": "顗。",
    "T51n2067_004:0023a15_24": "東西垂範。",
    "T51n2067_004:0023a15_25": "化通萬里。",
    "T51n2067_004:0023a15_26": "所造大寺。",
    "T51n2067_004:0023a15_27": "三十五所手度僧眾。",
    "T51n2067_004:0023a16_28": "四千餘人。",
    "T51n2067_004:0023a16_29": "寫經一十五藏。",
    "T51n2067_004:0023a17_0": "金檀畫像。",
    "T51n2067_004:0023a17_1": "十萬許軀。",
    "T51n2067_004:0023a17_2": "五十餘州道俗。",
    "T51n2067_004:0023a17_3": "受菩薩戒者。",
    "T51n2067_004:0023a18_4": "不可稱紀。",
    "T51n2067_004:0023a18_5": "傳業學士。",
    "T51n2067_004:0023a18_6": "三十二人。",
    "T51n2067_004:0023a18_7": "習禪學士。",
    "T51n2067_004:0023a19_8": "散流江漢。",
    "T51n2067_004:0023a19_9": "莫限其數。",
    "T51n2067_004:0023a19_10": "沙門灌頂。",
    "T51n2067_004:0023a19_11": "侍奉多年。",
    "T51n2067_004:0023a20_12": "歷其景行。",
    "T51n2067_004:0023a20_13": "可二十餘紙。",
    "T51n2067_004:0023a21_0": "釋智璪。",
    "T51n2067_004:0023a21_1": "俗姓張氏。",
    "T51n2067_004:0023a21_2": "清河人。",
    "T51n2067_004:0023a21_3": "晉室播遷。",
    "T51n2067_004:0023a21_4": "寓居臨海。",
    "T51n2067_004:0023a22_5": "祖元秀。",
    "T51n2067_004:0023a22_6": "梁倉部侍郎。",
    "T51n2067_004:0023a22_7": "任臨海內史。",
    "T51n2067_004:0023a22_8": "父文懷。",
    "T51n2067_004:0023a23_9": "陳中兵將軍。",
    "T51n2067_004:0023a23_10": "璪受經之歲。",
    "T51n2067_004:0023a23_11": "言無虛發。",
    "T51n2067_004:0023a23_12": "行不慚人。",
    "T51n2067_004:0023a24_13": "親里鄉隣。",
    "T51n2067_004:0023a24_14": "深加敬愛。",
    "T51n2067_004:0023a24_15": "年登十七。",
    "T51n2067_004:0023a24_16": "二親俱逝。",
    "T51n2067_004:0023a25_17": "便投安寧寺慧憑法師。",
    "T51n2067_004:0023a25_18": "以為弟子。",
    "T51n2067_004:0023a25_19": "逖聞智者軌行超群。",
    "T51n2067_004:0023a26_20": "為世良導。",
    "T51n2067_004:0023a26_21": "即泛舸豐流。",
    "T51n2067_004:0023a26_22": "直指台岫。",
    "T51n2067_004:0023a27_23": "伏膺受道。",
    "T51n2067_004:0023a27_24": "乃遣行法花懺悔。",
    "T51n2067_004:0023a27_25": "第二七日初夜。",
    "T51n2067_004:0023a28_26": "懺訖。",
    "T51n2067_004:0023a28_27": "還就禪床。",
    "T51n2067_004:0023a28_28": "始欲安坐。",
    "T51n2067_004:0023a28_29": "仍見九頭龍。",
    "T51n2067_004:0023a29_0": "從地涌出。",
    "T51n2067_004:0023a29_1": "上昇虛空。",
    "T51n2067_004:0023a29_2": "明旦諮白。",
    "T51n2067_004:0023a29_3": "云此是表九道眾生。",
    "T51n2067_004:0023b01_4": "聞法華經。",
    "T51n2067_004:0023b01_5": "將來之世。",
    "T51n2067_004:0023b01_6": "破無明地。",
    "T51n2067_004:0023b01_7": "入法性空耳。",
    "T51n2067_004:0023b02_8": "又陳至德四年。",
    "T51n2067_004:0023b02_9": "永陽王伯智。",
    "T51n2067_004:0023b02_10": "作牧仙都。",
    "T51n2067_004:0023b03_11": "延屈智者。",
    "T51n2067_004:0023b03_12": "來于鎮所。",
    "T51n2067_004:0023b03_13": "璪隨師受請。",
    "T51n2067_004:0023b03_14": "同赴稽山。",
    "T51n2067_004:0023b04_15": "九旬坐訖。",
    "T51n2067_004:0023b04_16": "仍即辭王。",
    "T51n2067_004:0023b04_17": "往寶林山寺。",
    "T51n2067_004:0023b04_18": "行法華三昧。",
    "T51n2067_004:0023b05_19": "初日初夜。",
    "T51n2067_004:0023b05_20": "如有人來搖動戶扉。",
    "T51n2067_004:0023b05_21": "璪即問之。",
    "T51n2067_004:0023b06_22": "汝是何人。",
    "T51n2067_004:0023b06_23": "夜來搖戶。",
    "T51n2067_004:0023b06_24": "即長聲答云。",
    "T51n2067_004:0023b06_25": "我來看燈耳。",
    "T51n2067_004:0023b07_26": "頻經數過。",
    "T51n2067_004:0023b07_27": "問答如前。",
    "T51n2067_004:0023b07_28": "其寺內。",
    "T51n2067_004:0023b07_29": "先有大德惠成禪師。",
    "T51n2067_004:0023b08_30": "夜具聞之。",
    "T51n2067_004:0023b08_31": "謂弟子曰。",
    "T51n2067_004:0023b08_32": "彼堂內。",
    "T51n2067_004:0023b09_33": "從來有大惡鬼。",
    "T51n2067_004:0023b09_34": "今聞此聲。",
    "T51n2067_004:0023b09_35": "必是鬼來取人也。",
    "T51n2067_004:0023b10_36": "天將欲曉。",
    "T51n2067_004:0023b10_37": "成師扣戶而喚。",
    "T51n2067_004:0023b10_38": "璪未暇得應。",
    "T51n2067_004:0023b10_39": "便繞堂唱云。",
    "T51n2067_004:0023b11_40": "苦哉苦哉。",
    "T51n2067_004:0023b11_41": "其人了矣。",
    "T51n2067_004:0023b11_42": "璪即開戶問意。",
    "T51n2067_004:0023b12_43": "答云。",
    "T51n2067_004:0023b12_44": "汝猶在耶。",
    "T51n2067_004:0023b12_45": "吾謂昨夜鬼已害汝。",
    "T51n2067_004:0023b12_46": "故此嗟耳。",
    "T51n2067_004:0023b13_47": "成師以事諮王。",
    "T51n2067_004:0023b13_48": "王遣數十人。",
    "T51n2067_004:0023b13_49": "執仗防護。",
    "T51n2067_004:0023b14_50": "璪謂防人曰。",
    "T51n2067_004:0023b14_51": "命由業也。",
    "T51n2067_004:0023b14_52": "豈防護所加。",
    "T51n2067_004:0023b14_53": "願諸仁者。",
    "T51n2067_004:0023b15_54": "將領還城所。",
    "T51n2067_004:0023b15_55": "啟王云爾。",
    "T51n2067_004:0023b15_56": "防人去後。",
    "T51n2067_004:0023b15_57": "第二日夜。",
    "T51n2067_004:0023b16_58": "鬼入堂內。",
    "T51n2067_004:0023b16_59": "槌壁打柱。",
    "T51n2067_004:0023b16_60": "周遍東西。",
    "T51n2067_004:0023b16_61": "堂內六燈。",
    "T51n2067_004:0023b17_62": "璪即滅五留一。",
    "T51n2067_004:0023b17_63": "行道坐禪誦經。",
    "T51n2067_004:0023b17_64": "坦然無懼。",
    "T51n2067_004:0023b18_0": "於三七日中。",
    "T51n2067_004:0023b18_1": "事恒如此。",
    "T51n2067_004:0023b18_2": "行法將訖。",
    "T51n2067_004:0023b18_3": "見一青衣童子。",
    "T51n2067_004:0023b19_4": "稱讚善哉。",
    "T51n2067_004:0023b19_5": "言已不現。",
    "T51n2067_004:0023b19_6": "雖值此二緣。",
    "T51n2067_004:0023b19_7": "心無憂喜。",
    "T51n2067_004:0023b20_8": "隋大業元年。",
    "T51n2067_004:0023b20_9": "駕幸江都。",
    "T51n2067_004:0023b20_10": "璪銜僧命出參。",
    "T51n2067_004:0023b21_11": "引入內殿。",
    "T51n2067_004:0023b21_12": "御遙見璪。",
    "T51n2067_004:0023b21_13": "即便避廗。",
    "T51n2067_004:0023b21_14": "命令就坐。",
    "T51n2067_004:0023b22_15": "種種顧問。",
    "T51n2067_004:0023b22_16": "便遣通事舍人盧正方。",
    "T51n2067_004:0023b22_17": "送璪還山。",
    "T51n2067_004:0023b23_18": "為智者。",
    "T51n2067_004:0023b23_19": "設一千僧齋。",
    "T51n2067_004:0023b23_20": "度四十九人出家。",
    "T51n2067_004:0023b23_21": "施寺物二千段。",
    "T51n2067_004:0023b24_22": "米三千石。",
    "T51n2067_004:0023b24_23": "并香蘇等。",
    "T51n2067_004:0023b24_24": "前後凡經八迴。",
    "T51n2067_004:0023b25_25": "參見天子。",
    "T51n2067_004:0023b25_26": "並蒙喜悅。",
    "T51n2067_004:0023b25_27": "供給豐厚。",
    "T51n2067_004:0023b25_28": "以貞觀十二年。",
    "T51n2067_004:0023b26_29": "卒於寺。",
    "T51n2067_004:0023b26_30": "春秋八十三矣。",
    "T51n2067_004:0023b27_0": "弘贊法花傳卷第四"
}