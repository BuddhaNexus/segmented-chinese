{
    "X76n1517_012:0253a17_0": "歷朝釋氏資鑑卷第十二",
    "X76n1517_012:0253a19_0": "閩扆峯沙門　熈仲　集",
    "X76n1517_012:0253a20_0": "大元昌運",
    "X76n1517_012:0253a21_0": "國朝肇造區宇。",
    "X76n1517_012:0253a21_1": "奄有四方。",
    "X76n1517_012:0253a22_0": "太祖聖武皇帝。",
    "X76n1517_012:0253a22_1": "握乾符而起朔土。",
    "X76n1517_012:0253a22_2": "以神武而膺帝圖。",
    "X76n1517_012:0253a23_0": "太宗皇帝。",
    "X76n1517_012:0253a23_1": "列聖相承。",
    "X76n1517_012:0253a23_2": "以成大業。",
    "X76n1517_012:0253a23_3": "殄滅殘金。",
    "X76n1517_012:0253a23_4": "平定汴蔡。",
    "X76n1517_012:0253a24_0": "撫安中原。",
    "X76n1517_012:0253b01_0": "世祖聖德神功文武皇帝。",
    "X76n1517_012:0253b01_1": "渡江之後。",
    "X76n1517_012:0253b01_2": "蓋將深入。",
    "X76n1517_012:0253b01_3": "乃聞國中重以僉軍之擾。",
    "X76n1517_012:0253b02_4": "黎庶驚駭。",
    "X76n1517_012:0253b02_5": "馹騎馳歸。",
    "X76n1517_012:0253b02_6": "宗盟推載。",
    "X76n1517_012:0253b03_7": "以世祖皇帝。",
    "X76n1517_012:0253b04_8": "乃太祖皇帝嫡孫之中。",
    "X76n1517_012:0253b06_0": "先皇母弟之列。",
    "X76n1517_012:0253b06_1": "以賢為長。",
    "X76n1517_012:0253b06_2": "止于一人。",
    "X76n1517_012:0253b06_3": "雖在征伐之間。",
    "X76n1517_012:0253b07_0": "亦有仁愛愽施濟眾。",
    "X76n1517_012:0253b07_1": "實可為天下主。",
    "X76n1517_012:0253b07_2": "歲庚申四月。",
    "X76n1517_012:0253b08_3": "即皇帝位。",
    "X76n1517_012:0253b09_4": "五月。",
    "X76n1517_012:0253b09_5": "建年號為中統元年。",
    "X76n1517_012:0253b09_6": "建元表歲。",
    "X76n1517_012:0253b09_7": "示人君萬世之傳紀。",
    "X76n1517_012:0253b10_8": "時書王見天下一家之義。",
    "X76n1517_012:0253b10_9": "法春秋之正。",
    "X76n1517_012:0253b11_10": "始體大易之乾元。",
    "X76n1517_012:0253b11_11": "炳煥皇猷。",
    "X76n1517_012:0253b12_12": "權輿治道。",
    "X76n1517_012:0253b12_13": "內立都省。",
    "X76n1517_012:0253b12_14": "以總宏綱。",
    "X76n1517_012:0253b12_15": "外設總司。",
    "X76n1517_012:0253b13_0": "以平庶政。",
    "X76n1517_012:0253b13_1": "燕京修營。",
    "X76n1517_012:0253b13_2": "宮室加號。",
    "X76n1517_012:0253b13_3": "　上都五年。",
    "X76n1517_012:0253b13_4": "改為至元八年。",
    "X76n1517_012:0253b14_5": "建國號曰大元。",
    "X76n1517_012:0253b15_6": "蓋易經乾元之義。",
    "X76n1517_012:0253b15_7": "以明資始之功。",
    "X76n1517_012:0253b15_8": "天戈南指。",
    "X76n1517_012:0253b15_9": "命帥遣將。",
    "X76n1517_012:0253b16_10": "戒以不殺。",
    "X76n1517_012:0253b16_11": "江南州郡。",
    "X76n1517_012:0253b16_12": "望風歸附。",
    "X76n1517_012:0253b16_13": "十三年歲丙子正月。",
    "X76n1517_012:0253b17_14": "収宋南北混一。",
    "X76n1517_012:0253b17_15": "天成地平。",
    "X76n1517_012:0253b17_16": "上應天心。",
    "X76n1517_012:0253b18_17": "下慰民望。",
    "X76n1517_012:0253b18_18": "大哉乾元。",
    "X76n1517_012:0253b18_19": "至哉坤元。",
    "X76n1517_012:0253b18_20": "為民父母。",
    "X76n1517_012:0253b19_0": "　神武一奮。",
    "X76n1517_012:0253b19_1": "疆宇泰恢。",
    "X76n1517_012:0253b19_2": "天地覆載之間。",
    "X76n1517_012:0253b19_3": "悉歸一洪化。",
    "X76n1517_012:0253b20_4": "日月照臨之所。",
    "X76n1517_012:0253b20_5": "皆彼□容光。",
    "X76n1517_012:0253b20_6": "蓋一念之仁。",
    "X76n1517_012:0253b20_7": "有以基也。",
    "X76n1517_012:0253b21_8": "洪惟娑婆世主。",
    "X76n1517_012:0253b22_9": "佛心天子。",
    "X76n1517_012:0253b22_10": "自剎帝利種以流芳。",
    "X76n1517_012:0253b22_11": "直至今大元而續焰。",
    "X76n1517_012:0253b23_12": "金枝而枝枝挺秀。",
    "X76n1517_012:0253b23_13": "玉葉而葉葉相承。",
    "X76n1517_012:0253b23_14": "法輪大轉於支那。",
    "X76n1517_012:0253c01_0": "帝日長輝於震旦。",
    "X76n1517_012:0253c01_1": "光融沙界。",
    "X76n1517_012:0253c01_2": "凉蔭蒼生。",
    "X76n1517_012:0253c01_3": "內立帝師。",
    "X76n1517_012:0253c02_4": "為舟航於法海。",
    "X76n1517_012:0253c02_5": "外設僧統。",
    "X76n1517_012:0253c02_6": "乃撫治於教門。",
    "X76n1517_012:0253c02_7": "故我仁宗皇帝。",
    "X76n1517_012:0253c04_8": "聖旨頒行。",
    "X76n1517_012:0253c04_9": "天下各路。",
    "X76n1517_012:0253c04_10": "建立帝師殿。",
    "X76n1517_012:0253c05_11": "高文廟五尺。",
    "X76n1517_012:0253c05_12": "則加號曰皇天之下。",
    "X76n1517_012:0253c06_13": "一人之上。",
    "X76n1517_012:0253c06_14": "開敷宣文。",
    "X76n1517_012:0253c06_15": "輔治大聖。",
    "X76n1517_012:0253c06_16": "至德普覺。",
    "X76n1517_012:0253c07_0": "真智祐國。",
    "X76n1517_012:0253c07_1": "如意大寶法王。",
    "X76n1517_012:0253c07_2": "西天佛子大元帝師。",
    "X76n1517_012:0253c07_3": "以彰其尊師重法也。",
    "X76n1517_012:0253c08_4": "天下寺院裏。",
    "X76n1517_012:0253c08_5": "祝粮休納。",
    "X76n1517_012:0253c08_6": "差彼體當歷朝遣使馳驛降香。",
    "X76n1517_012:0253c10_7": "遍行天下寺院裏。",
    "X76n1517_012:0253c10_8": "開讀大藏經文。",
    "X76n1517_012:0253c11_9": "布施齋料。",
    "X76n1517_012:0253c11_10": "有司准給。",
    "X76n1517_012:0253c11_11": "專為告天祝壽。",
    "X76n1517_012:0253c13_12": "以表其敬僧弘教也。",
    "X76n1517_012:0253c14_0": "聖旨節該。",
    "X76n1517_012:0253c14_1": "凡有重刑至死者。",
    "X76n1517_012:0253c14_2": "如府州審問獄成。",
    "X76n1517_012:0253c14_3": "便行斷決。",
    "X76n1517_012:0253c15_4": "死者不可復生。",
    "X76n1517_012:0253c15_5": "斷者不可復續。",
    "X76n1517_012:0253c15_6": "案牘繁冗。",
    "X76n1517_012:0253c16_0": "須臾決判萬一差誤人命。",
    "X76n1517_012:0253c16_1": "悔將何及。",
    "X76n1517_012:0253c16_2": "　朕實矜怜。",
    "X76n1517_012:0253c17_3": "今後凡有死刑。",
    "X76n1517_012:0253c17_4": "審覆無疑。",
    "X76n1517_012:0253c17_5": "呈省聞奏。",
    "X76n1517_012:0253c18_6": "待報斷決。",
    "X76n1517_012:0253c18_7": "雖堯仁如天。",
    "X76n1517_012:0253c18_8": "亦不過是。",
    "X76n1517_012:0253c18_9": "其崇儒也。",
    "X76n1517_012:0253c18_10": "立國子監。",
    "X76n1517_012:0253c19_11": "置大學。",
    "X76n1517_012:0253c19_12": "免一切差發。",
    "X76n1517_012:0253c19_13": "天下之士心歸焉。",
    "X76n1517_012:0253c20_0": "其恤民也。",
    "X76n1517_012:0253c20_1": "置按察司。",
    "X76n1517_012:0253c20_2": "選擇官吏。",
    "X76n1517_012:0253c20_3": "勸課農桑。",
    "X76n1517_012:0253c20_4": "問民疾苦。",
    "X76n1517_012:0253c21_5": "天時灾旱。",
    "X76n1517_012:0253c21_6": "腹裏則減免包銀絲綿。",
    "X76n1517_012:0253c21_7": "江南則減憂稅秋粮。",
    "X76n1517_012:0253c22_8": "天下之民心歸焉。",
    "X76n1517_012:0253c22_9": "其恤軍也。",
    "X76n1517_012:0253c22_10": "遠征陣亡子弟。",
    "X76n1517_012:0253c23_11": "承襲以爵。",
    "X76n1517_012:0253c23_12": "家口贍以月粮。",
    "X76n1517_012:0253c23_13": "天下之軍心歸焉。",
    "X76n1517_012:0253c24_14": "以至商稅三十分取一。",
    "X76n1517_012:0253c24_15": "深得古人什一之制。",
    "X76n1517_012:0254a01_16": "孝子節婦之旌賞。",
    "X76n1517_012:0254a01_17": "游手好閑之懲勸。",
    "X76n1517_012:0254a01_18": "靡所不周也。",
    "X76n1517_012:0254a03_0": "大元肇興。",
    "X76n1517_012:0254a03_1": "間世英武。",
    "X76n1517_012:0254a03_2": "席掩八方。",
    "X76n1517_012:0254a03_3": "囊括四海。",
    "X76n1517_012:0254a03_4": "東至日出之晹谷。",
    "X76n1517_012:0254a04_5": "西至日昧之虞淵。",
    "X76n1517_012:0254a04_6": "寸地尺天。",
    "X76n1517_012:0254a04_7": "皆入版圖。",
    "X76n1517_012:0254a05_0": "人心歸之。",
    "X76n1517_012:0254a05_1": "天命歸之。",
    "X76n1517_012:0254a05_2": "九流樂業。",
    "X76n1517_012:0254a05_3": "萬國謳歌。",
    "X76n1517_012:0254a05_4": "自闢以來。",
    "X76n1517_012:0254a06_5": "實未之有也。",
    "X76n1517_012:0254a07_0": "得一混一三千大千世界。",
    "X76n1517_012:0254a07_1": "而統御金輪。",
    "X76n1517_012:0254a09_0": "大元至元。",
    "X76n1517_012:0254a09_1": "百億萬億年華。",
    "X76n1517_012:0254a09_2": "而延洪寶曆。",
    "X76n1517_012:0254a10_3": "容摭事實。",
    "X76n1517_012:0254a10_4": "鋟梓流通。",
    "X76n1517_012:0254a11_0": "自堯甲辰即位。",
    "X76n1517_012:0254a11_1": "至大元元統二年歲甲戌。",
    "X76n1517_012:0254a12_2": "凡三千六百九十二年。",
    "X76n1517_012:0254a12_3": "計六十二周甲子。",
    "X76n1517_012:0254a14_0": "舊都通玄關北。",
    "X76n1517_012:0254a14_1": "有永安寺。",
    "X76n1517_012:0254a14_2": "廢盡惟塔存焉。",
    "X76n1517_012:0254a14_3": "其石刻釋迦舍利塔。",
    "X76n1517_012:0254a15_4": "大遼壽昌二年三月十五日。",
    "X76n1517_012:0254a15_5": "顯密圓通法師道[辰*殳]造。",
    "X76n1517_012:0254a16_6": "內有舍利戒珠二十粒。",
    "X76n1517_012:0254a16_7": "香泥小塔二千。",
    "X76n1517_012:0254a16_8": "及陀羅經五部。",
    "X76n1517_012:0254a17_9": "兵火蕪沒。",
    "X76n1517_012:0254a17_10": "淨夜屢放光明。",
    "X76n1517_012:0254a17_11": "奉御禿列。",
    "X76n1517_012:0254a17_12": "奏其祥瑞。",
    "X76n1517_012:0254a18_13": "有旨開舊塔。",
    "X76n1517_012:0254a18_14": "石凾中有鐵塔。",
    "X76n1517_012:0254a18_15": "塔內有銅缾。",
    "X76n1517_012:0254a18_16": "香水盈滿。",
    "X76n1517_012:0254a19_17": "色如玉漿。",
    "X76n1517_012:0254a19_18": "舍利堅圓。",
    "X76n1517_012:0254a19_19": "燦若金粟。",
    "X76n1517_012:0254a19_20": "瓶底獲一錢。",
    "X76n1517_012:0254a20_0": "上鑄至元通寶。",
    "X76n1517_012:0254a20_1": "乃知聖人制法。",
    "X76n1517_012:0254a20_2": "預定待時呈顯。",
    "X76n1517_012:0254a20_3": "即至元八年三月二十五日也。",
    "X76n1517_012:0254a22_0": "帝后王臣閱之。",
    "X76n1517_012:0254a22_1": "愈加崇重。",
    "X76n1517_012:0254a22_2": "即迎舍利。",
    "X76n1517_012:0254a22_3": "重立斯塔。",
    "X76n1517_012:0254a22_4": "而倍增莊嚴焉(文多不盡錄辯偽錄)。",
    "X76n1517_012:0254a24_0": "歷朝釋氏資鑑卷第十二(終)",
    "X76n1517_012:0254b02_0": "國朝帝師行實",
    "X76n1517_012:0254b03_0": "班彌怛拔思發(相粉白色)帝師迺土波國人也。",
    "X76n1517_012:0254b03_1": "生時諸種瑞應。",
    "X76n1517_012:0254b04_2": "具詳家譜。",
    "X76n1517_012:0254b04_3": "初土波有國師禪怛羅乞答。",
    "X76n1517_012:0254b04_4": "具大威神。",
    "X76n1517_012:0254b05_5": "累葉相傳。",
    "X76n1517_012:0254b05_6": "其國王。",
    "X76n1517_012:0254b05_7": "世師尊之。",
    "X76n1517_012:0254b05_8": "凡十七代。",
    "X76n1517_012:0254b05_9": "而至薩師加哇。",
    "X76n1517_012:0254b06_10": "即師之伯父也。",
    "X76n1517_012:0254b06_11": "廼禮伯父為師。",
    "X76n1517_012:0254b06_12": "秘密伽陀一二千言。",
    "X76n1517_012:0254b07_13": "過目成誦。",
    "X76n1517_012:0254b07_14": "七歲演法。",
    "X76n1517_012:0254b07_15": "辨愽縱橫。",
    "X76n1517_012:0254b07_16": "然且不自足。",
    "X76n1517_012:0254b07_17": "復遍咨名宿。",
    "X76n1517_012:0254b08_18": "勾玄索隱。",
    "X76n1517_012:0254b08_19": "盡通三藏。",
    "X76n1517_012:0254b08_20": "癸丑。",
    "X76n1517_012:0254b08_21": "師年十五歲　世祖皇帝　龍德淵潛。",
    "X76n1517_012:0254b09_22": "師始知一真命有歸。",
    "X76n1517_012:0254b09_23": "馳馹徑詣　王府　世祖　中闈　東宮。",
    "X76n1517_012:0254b10_24": "皆秉受戒法。",
    "X76n1517_012:0254b10_25": "特加尊禮。",
    "X76n1517_012:0254b11_26": "戊午。",
    "X76n1517_012:0254b11_27": "師年二十歲。",
    "X76n1517_012:0254b11_28": "時釋道二教。",
    "X76n1517_012:0254b11_29": "證正化胡經　憲宗皇帝。",
    "X76n1517_012:0254b12_30": "詔師剖析是非。",
    "X76n1517_012:0254b12_31": "特道士不能答。",
    "X76n1517_012:0254b12_32": "自棄其學　上大悅。",
    "X76n1517_012:0254b13_33": "庚申。",
    "X76n1517_012:0254b13_34": "師年三十二歲　世祖皇帝登極。",
    "X76n1517_012:0254b13_35": "建元中統。",
    "X76n1517_012:0254b14_36": "尊為　國師。",
    "X76n1517_012:0254b14_37": "授以玉印。",
    "X76n1517_012:0254b14_38": "任中原法主。",
    "X76n1517_012:0254b14_39": "統天下教門。",
    "X76n1517_012:0254b15_40": "辭　帝西歸。",
    "X76n1517_012:0254b15_41": "未朞月召還。",
    "X76n1517_012:0254b15_42": "庚午。",
    "X76n1517_012:0254b15_43": "師年三十二歲。",
    "X76n1517_012:0254b16_0": "時至元七年。",
    "X76n1517_012:0254b16_1": "詔制　大元國字。",
    "X76n1517_012:0254b16_2": "師獨運摹畫作成。",
    "X76n1517_012:0254b16_3": "稱　旨。",
    "X76n1517_012:0254b17_4": "即頒行。",
    "X76n1517_012:0254b17_5": "朝省郡縣遵用。",
    "X76n1517_012:0254b17_6": "迄為一代典章。",
    "X76n1517_012:0254b17_7": "升號一帝師。",
    "X76n1517_012:0254b18_8": "詔云　皇天之下一人之上開教宣文輔治大聖至德普覺真智祐國如意大寶法王　西天佛子　大元帝師。",
    "X76n1517_012:0254b20_9": "更賜玉印。",
    "X76n1517_012:0254b20_10": "統領諸國釋教。",
    "X76n1517_012:0254b20_11": "旋又西歸。",
    "X76n1517_012:0254b20_12": "甲戌。",
    "X76n1517_012:0254b21_13": "師年三十六歲。",
    "X76n1517_012:0254b21_14": "時至元十一年。",
    "X76n1517_012:0254b21_15": "皇上專使召之。",
    "X76n1517_012:0254b21_16": "歲杪柢　京。",
    "X76n1517_012:0254b22_17": "王公宰輔士庶。",
    "X76n1517_012:0254b22_18": "離城一舍。",
    "X76n1517_012:0254b22_19": "結大香壇。",
    "X76n1517_012:0254b22_20": "設大淨供。",
    "X76n1517_012:0254b23_21": "香花幢蓋大樂仙音。",
    "X76n1517_012:0254b23_22": "羅拜迎之。",
    "X76n1517_012:0254b23_23": "所經衢陌。",
    "X76n1517_012:0254b23_24": "皆結五綵。",
    "X76n1517_012:0254b24_25": "翼其兩傍。",
    "X76n1517_012:0254b24_26": "萬眾瞻禮。",
    "X76n1517_012:0254b24_27": "若一佛出世時。",
    "X76n1517_012:0254b24_28": "則　天兵飛渡長江。",
    "X76n1517_012:0254c01_29": "竟成一統。",
    "X76n1517_012:0254c01_30": "雖　主聖臣賢所致。",
    "X76n1517_012:0254c01_31": "亦師陰相之也。",
    "X76n1517_012:0254c02_32": "為　真金太子。",
    "X76n1517_012:0254c02_33": "說器世界等。",
    "X76n1517_012:0254c02_34": "彰所知論。",
    "X76n1517_012:0254c02_35": "尋又力辭西歸　皇上堅留之。",
    "X76n1517_012:0254c03_36": "不可。",
    "X76n1517_012:0254c03_37": "庚辰。",
    "X76n1517_012:0254c03_38": "師年四十二歲。",
    "X76n1517_012:0254c03_39": "時至元十七年。",
    "X76n1517_012:0254c04_40": "十一月二十二日示寂。",
    "X76n1517_012:0254c04_41": "　上聞之。",
    "X76n1517_012:0254c04_42": "不勝震悼。",
    "X76n1517_012:0254c05_43": "追懷舊德。",
    "X76n1517_012:0254c05_44": "連建大窣堵坡于　京師。",
    "X76n1517_012:0254c05_45": "寶藏真身舍利。",
    "X76n1517_012:0254c06_46": "輪魚金碧。",
    "X76n1517_012:0254c06_47": "今古無儔矣。",
    "X76n1517_012:0254c07_0": "翰林學士　王磐等奉　詔述譔",
    "X76n1517_012:0254c10_0": "諸佛世尊。",
    "X76n1517_012:0254c10_1": "以一大事因緣故。",
    "X76n1517_012:0254c10_2": "出現於世。",
    "X76n1517_012:0254c10_3": "觀根逗教。",
    "X76n1517_012:0254c10_4": "普應群機。",
    "X76n1517_012:0254c11_5": "騰蘭入漢。",
    "X76n1517_012:0254c11_6": "達磨來梁。",
    "X76n1517_012:0254c11_7": "摧佛滅僧。",
    "X76n1517_012:0254c11_8": "開關延敵。",
    "X76n1517_012:0254c11_9": "雖黃異端。",
    "X76n1517_012:0254c12_10": "何左涂哉。",
    "X76n1517_012:0254c12_11": "予託跡空宗。",
    "X76n1517_012:0254c12_12": "周游暇日。",
    "X76n1517_012:0254c12_13": "閱竺典。",
    "X76n1517_012:0254c12_14": "味宣律師三寶感通傳云。",
    "X76n1517_012:0254c13_15": "數感天人有若曾面。",
    "X76n1517_012:0254c13_16": "告余曰。",
    "X76n1517_012:0254c14_0": "所著文翰。",
    "X76n1517_012:0254c14_1": "續高僧傳。",
    "X76n1517_012:0254c14_2": "廣弘明集。",
    "X76n1517_012:0254c14_3": "裨助聖化。",
    "X76n1517_012:0254c15_4": "幽靈隨喜。",
    "X76n1517_012:0254c15_5": "無不讚悅。",
    "X76n1517_012:0254c15_6": "於是。",
    "X76n1517_012:0254c15_7": "遂摭儒釋群書。",
    "X76n1517_012:0254c15_8": "自開闢以來。",
    "X76n1517_012:0254c16_9": "迄于皇元一統。",
    "X76n1517_012:0254c17_10": "歷代　國朝。",
    "X76n1517_012:0254c17_11": "佛法關繫。",
    "X76n1517_012:0254c17_12": "隆替利害。",
    "X76n1517_012:0254c17_13": "宿德與王臣。",
    "X76n1517_012:0254c18_14": "機語契合。",
    "X76n1517_012:0254c18_15": "對辯唱詶。",
    "X76n1517_012:0254c18_16": "去華取實。",
    "X76n1517_012:0254c18_17": "筆而萃之。",
    "X76n1517_012:0254c18_18": "目接心覽。",
    "X76n1517_012:0254c19_19": "旹會儼然。",
    "X76n1517_012:0254c19_20": "知我辠我。",
    "X76n1517_012:0254c19_21": "庶幾無根之誚。",
    "X76n1517_012:0254c19_22": "至元后丙子歲﨟月書成。",
    "X76n1517_012:0254c20_23": "夢感。",
    "X76n1517_012:0254c20_24": "異人閱其錄。",
    "X76n1517_012:0254c20_25": "屢以資鑑稱之。",
    "X76n1517_012:0254c20_26": "寤而目曰歷朝釋氏資鑑。",
    "X76n1517_012:0254c21_27": "或曰。",
    "X76n1517_012:0254c21_28": "佛運統記。",
    "X76n1517_012:0254c21_29": "五灯會要。",
    "X76n1517_012:0254c21_30": "昭揭於世。",
    "X76n1517_012:0254c22_31": "猶刻舟記釰。",
    "X76n1517_012:0254c22_32": "市擐還珠。",
    "X76n1517_012:0254c22_33": "視此有媿耶。",
    "X76n1517_012:0254c22_34": "無媿耶。",
    "X76n1517_012:0254c23_0": "予遂合十而謝之曰。",
    "X76n1517_012:0254c23_1": "審如是則此話行矣。",
    "X76n1517_012:0254c24_0": "寂光曹滅叟　　　熈仲　敬識"
}