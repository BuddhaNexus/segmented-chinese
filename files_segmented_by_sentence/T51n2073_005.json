{
    "T51n2073_005:0170c11_0": "華嚴經傳記卷第五",
    "T51n2073_005:0170c13_0": "京兆崇福寺僧沙門法藏集",
    "T51n2073_005:0170c14_0": "書寫第九雜述第十",
    "T51n2073_005:0170c15_0": "書寫第九",
    "T51n2073_005:0170c16_0": "魏安豐王延明中山王凞",
    "T51n2073_005:0170c17_0": "釋德圓釋法誠",
    "T51n2073_005:0170c18_0": "釋修德唐朝散大夫孫思邈",
    "T51n2073_005:0170c19_0": "居士康阿祿山",
    "T51n2073_005:0170c20_0": "魏安豐王延明中山王熙。",
    "T51n2073_005:0170c20_1": "竝以宗室。",
    "T51n2073_005:0170c20_2": "博古學文。",
    "T51n2073_005:0170c21_3": "俱立道場。",
    "T51n2073_005:0170c21_4": "齋講相續。",
    "T51n2073_005:0170c21_5": "以香汁和墨。",
    "T51n2073_005:0170c21_6": "寫華嚴經一百部。",
    "T51n2073_005:0170c22_7": "素書金字華嚴一部。",
    "T51n2073_005:0170c22_8": "皆五香厨。",
    "T51n2073_005:0170c22_9": "四寶函盛。",
    "T51n2073_005:0170c23_10": "靜夜良辰。",
    "T51n2073_005:0170c23_11": "清齋行道。",
    "T51n2073_005:0170c23_12": "每放五色神光。",
    "T51n2073_005:0170c24_0": "照耀臺宇。",
    "T51n2073_005:0170c24_1": "眾皆共觀。",
    "T51n2073_005:0170c24_2": "倍更發心。",
    "T51n2073_005:0170c25_0": "釋德圓。",
    "T51n2073_005:0170c25_1": "不知氏族。",
    "T51n2073_005:0170c25_2": "天水人也。",
    "T51n2073_005:0170c25_3": "少出家。",
    "T51n2073_005:0170c25_4": "常以華嚴為業。",
    "T51n2073_005:0170c26_5": "讀誦禪思。",
    "T51n2073_005:0170c26_6": "用為恒准。",
    "T51n2073_005:0170c26_7": "周遊講肆。",
    "T51n2073_005:0170c26_8": "妙該宗極。",
    "T51n2073_005:0170c27_9": "欽惟奧典。",
    "T51n2073_005:0170c27_10": "希展慇誠。",
    "T51n2073_005:0170c27_11": "遂修一淨園。",
    "T51n2073_005:0170c28_0": "樹諸穀楮。",
    "T51n2073_005:0170c28_1": "并種香草雜華。",
    "T51n2073_005:0170c28_2": "洗濯入園。",
    "T51n2073_005:0170c28_3": "溉灌香水。",
    "T51n2073_005:0170c29_4": "楮生三載。",
    "T51n2073_005:0170c29_5": "馥氣氛氳。",
    "T51n2073_005:0170c29_6": "別造淨屋。",
    "T51n2073_005:0170c29_7": "香泥壁地。",
    "T51n2073_005:0171a01_8": "潔檀淨器浴具新衣。",
    "T51n2073_005:0171a01_9": "匠人齊戒。",
    "T51n2073_005:0171a01_10": "易服入出。",
    "T51n2073_005:0171a02_0": "必盥[口*敕]熏香。",
    "T51n2073_005:0171a02_1": "剝楮取皮。",
    "T51n2073_005:0171a02_2": "浸以沈水。",
    "T51n2073_005:0171a02_3": "護淨造紙。",
    "T51n2073_005:0171a03_0": "畢歲方成。",
    "T51n2073_005:0171a03_1": "別築淨基。",
    "T51n2073_005:0171a03_2": "更造新室。",
    "T51n2073_005:0171a03_3": "乃至材梁椽瓦。",
    "T51n2073_005:0171a04_4": "竝濯以香湯。",
    "T51n2073_005:0171a04_5": "每事嚴潔。",
    "T51n2073_005:0171a04_6": "堂中安施文柏牙座。",
    "T51n2073_005:0171a05_7": "周布香華。",
    "T51n2073_005:0171a05_8": "上懸繒寶蓋。",
    "T51n2073_005:0171a05_9": "垂諸鈴珮。",
    "T51n2073_005:0171a05_10": "雜以流蘇白檀紫沈。",
    "T51n2073_005:0171a06_11": "以為經案。",
    "T51n2073_005:0171a06_12": "并充筆管。",
    "T51n2073_005:0171a06_13": "經生日受齋戒。",
    "T51n2073_005:0171a07_14": "香湯三浴。",
    "T51n2073_005:0171a07_15": "華冠淨服。",
    "T51n2073_005:0171a07_16": "狀類天人。",
    "T51n2073_005:0171a07_17": "將入經室。",
    "T51n2073_005:0171a08_18": "必夾路焚香。",
    "T51n2073_005:0171a08_19": "梵唄先引。",
    "T51n2073_005:0171a08_20": "圓亦形服嚴淨。",
    "T51n2073_005:0171a09_0": "執鑪恭導。",
    "T51n2073_005:0171a09_1": "散華供養。",
    "T51n2073_005:0171a09_2": "方乃書寫。",
    "T51n2073_005:0171a09_3": "圓跪運想。",
    "T51n2073_005:0171a09_4": "住目傾心。",
    "T51n2073_005:0171a10_5": "纔寫數行。",
    "T51n2073_005:0171a10_6": "每字皆放光明。",
    "T51n2073_005:0171a10_7": "照於一院。",
    "T51n2073_005:0171a11_0": "舉眾同見。",
    "T51n2073_005:0171a11_1": "莫不悲感。",
    "T51n2073_005:0171a11_2": "久之方歇。",
    "T51n2073_005:0171a11_3": "復感神人執戟現形警衛。",
    "T51n2073_005:0171a12_4": "圓與書生同見。",
    "T51n2073_005:0171a12_5": "餘人則不覩焉。",
    "T51n2073_005:0171a13_0": "又有青衣梵童子。",
    "T51n2073_005:0171a13_1": "無何而至。",
    "T51n2073_005:0171a13_2": "手執天華。",
    "T51n2073_005:0171a13_3": "忽申供養。",
    "T51n2073_005:0171a14_4": "前後靈感。",
    "T51n2073_005:0171a14_5": "雜沓相仍。",
    "T51n2073_005:0171a14_6": "迄經二歲。",
    "T51n2073_005:0171a14_7": "書寫方畢。",
    "T51n2073_005:0171a15_8": "盛以香函。",
    "T51n2073_005:0171a15_9": "置諸寶帳。",
    "T51n2073_005:0171a15_10": "安彼淨堂。",
    "T51n2073_005:0171a15_11": "每申頂謁。",
    "T51n2073_005:0171a16_12": "後因轉讀。",
    "T51n2073_005:0171a16_13": "函發異光。",
    "T51n2073_005:0171a16_14": "至於潔敬。",
    "T51n2073_005:0171a16_15": "事絕今古。",
    "T51n2073_005:0171a17_16": "若茲徵瑞蓋亦罕儔。",
    "T51n2073_005:0171a17_17": "此經遽相付授。",
    "T51n2073_005:0171a17_18": "至今五師。",
    "T51n2073_005:0171a18_19": "後人入淨轉讀。",
    "T51n2073_005:0171a18_20": "時有靈應。",
    "T51n2073_005:0171a18_21": "今在西大原寺僧賢首處。",
    "T51n2073_005:0171a19_22": "守護供養焉。",
    "T51n2073_005:0171a20_0": "釋法誠。",
    "T51n2073_005:0171a20_1": "俗姓焚氏。",
    "T51n2073_005:0171a20_2": "雍州萬年縣人。",
    "T51n2073_005:0171a20_3": "幼出家。",
    "T51n2073_005:0171a20_4": "每以誦華嚴為業。",
    "T51n2073_005:0171a21_5": "因遇慧超禪師。",
    "T51n2073_005:0171a21_6": "隱居藍谷。",
    "T51n2073_005:0171a21_7": "高山仰止。",
    "T51n2073_005:0171a22_8": "竊有庶幾。",
    "T51n2073_005:0171a22_9": "遂屏囂煩。",
    "T51n2073_005:0171a22_10": "披誠請益。",
    "T51n2073_005:0171a22_11": "後於寺南嶺。",
    "T51n2073_005:0171a23_12": "造華嚴堂。",
    "T51n2073_005:0171a23_13": "添潔中外。",
    "T51n2073_005:0171a23_14": "方就抄寫。",
    "T51n2073_005:0171a23_15": "其堂瓦及埿。",
    "T51n2073_005:0171a24_16": "并用香水。",
    "T51n2073_005:0171a24_17": "皆誠自[跳兆+丞]踏。",
    "T51n2073_005:0171a24_18": "莊嚴既畢。",
    "T51n2073_005:0171a25_0": "乃潔淨圖畫七處八會之像。",
    "T51n2073_005:0171a25_1": "又訪召當時工書之人。",
    "T51n2073_005:0171a26_2": "弘文館學士張靜。",
    "T51n2073_005:0171a26_3": "每事清淨。",
    "T51n2073_005:0171a26_4": "敬寫此經。",
    "T51n2073_005:0171a27_5": "誠亦親執香鑪。",
    "T51n2073_005:0171a27_6": "專精供養。",
    "T51n2073_005:0171a27_7": "乃至一點一書。",
    "T51n2073_005:0171a28_0": "住目傾心。",
    "T51n2073_005:0171a28_1": "然施慧慇重。",
    "T51n2073_005:0171a28_2": "雨紙。",
    "T51n2073_005:0171a28_3": "酬錢五百。",
    "T51n2073_005:0171a28_4": "便感瑞鳥。",
    "T51n2073_005:0171a29_5": "形色非常。",
    "T51n2073_005:0171a29_6": "銜華入堂。",
    "T51n2073_005:0171a29_7": "徘徊旋繞。",
    "T51n2073_005:0171a29_8": "下至經案。",
    "T51n2073_005:0171b01_9": "復上香鑪。",
    "T51n2073_005:0171b01_10": "其經當寫未終。",
    "T51n2073_005:0171b01_11": "後方更續。",
    "T51n2073_005:0171b02_0": "更續之日。",
    "T51n2073_005:0171b02_1": "鳥又飛來。",
    "T51n2073_005:0171b02_2": "復造寶帳香函。",
    "T51n2073_005:0171b02_3": "瑩飾周修。",
    "T51n2073_005:0171b03_4": "自爾精心轉讀者。",
    "T51n2073_005:0171b03_5": "多蒙感祐矣。",
    "T51n2073_005:0171b04_0": "唐定州中山禪師釋修德者。",
    "T51n2073_005:0171b04_1": "不知氏族。",
    "T51n2073_005:0171b04_2": "苦節成性。",
    "T51n2073_005:0171b05_3": "守道山林。",
    "T51n2073_005:0171b05_4": "依華嚴經及起信論。",
    "T51n2073_005:0171b05_5": "安心結業。",
    "T51n2073_005:0171b06_6": "攝念修禪。",
    "T51n2073_005:0171b06_7": "於永徽四年。",
    "T51n2073_005:0171b06_8": "蹄誠方廣。",
    "T51n2073_005:0171b06_9": "因發大心。",
    "T51n2073_005:0171b07_10": "至精抄寫。",
    "T51n2073_005:0171b07_11": "故別於淨院。",
    "T51n2073_005:0171b07_12": "植楮樹凡歷三年。",
    "T51n2073_005:0171b08_13": "兼之華藥。",
    "T51n2073_005:0171b08_14": "灌以香水。",
    "T51n2073_005:0171b08_15": "潔淨造紙。",
    "T51n2073_005:0171b08_16": "復別築淨臺。",
    "T51n2073_005:0171b09_17": "於上起屋。",
    "T51n2073_005:0171b09_18": "召善書人媯州王恭。",
    "T51n2073_005:0171b09_19": "別院齋戒洗。",
    "T51n2073_005:0171b10_20": "浴淨衣。",
    "T51n2073_005:0171b10_21": "焚香布華。",
    "T51n2073_005:0171b10_22": "懸諸幡蓋。",
    "T51n2073_005:0171b10_23": "禮經懺悔。",
    "T51n2073_005:0171b11_0": "方昇座焉。",
    "T51n2073_005:0171b11_1": "下筆含香。",
    "T51n2073_005:0171b11_2": "舉筆吐氣。",
    "T51n2073_005:0171b11_3": "每日恒然精勤無怠。",
    "T51n2073_005:0171b12_4": "禪師躬自入淨。",
    "T51n2073_005:0171b12_5": "運想燒香。",
    "T51n2073_005:0171b12_6": "筆翰之間。",
    "T51n2073_005:0171b13_7": "并專心目。",
    "T51n2073_005:0171b13_8": "因修若是。",
    "T51n2073_005:0171b13_9": "迄于終始。",
    "T51n2073_005:0171b13_10": "每寫一卷。",
    "T51n2073_005:0171b14_11": "施縑十匹。",
    "T51n2073_005:0171b14_12": "迄成一部。",
    "T51n2073_005:0171b14_13": "總施六百餘段。",
    "T51n2073_005:0171b14_14": "恭因發心。",
    "T51n2073_005:0171b15_15": "并皆不受。",
    "T51n2073_005:0171b15_16": "勞誠竭慮。",
    "T51n2073_005:0171b15_17": "筋力都盡。",
    "T51n2073_005:0171b15_18": "寫經纔畢。",
    "T51n2073_005:0171b16_19": "俄從永化。",
    "T51n2073_005:0171b16_20": "德以經成。",
    "T51n2073_005:0171b16_21": "設齋慶集。",
    "T51n2073_005:0171b16_22": "大眾同請。",
    "T51n2073_005:0171b17_23": "希心禮見。",
    "T51n2073_005:0171b17_24": "禪師於眾前。",
    "T51n2073_005:0171b17_25": "燒香散華。",
    "T51n2073_005:0171b17_26": "發發弘誓願。",
    "T51n2073_005:0171b18_27": "纔開經藏。",
    "T51n2073_005:0171b18_28": "放大光明。",
    "T51n2073_005:0171b18_29": "周七十餘里。",
    "T51n2073_005:0171b18_30": "照定州城。",
    "T51n2073_005:0171b19_31": "城中士女。",
    "T51n2073_005:0171b19_32": "并皆同見。",
    "T51n2073_005:0171b19_33": "中山齋眾。",
    "T51n2073_005:0171b19_34": "既覩希奇。",
    "T51n2073_005:0171b20_35": "得未曾有。",
    "T51n2073_005:0171b20_36": "投身宛轉。",
    "T51n2073_005:0171b20_37": "悲嘷懺悔。",
    "T51n2073_005:0171b20_38": "禪師又勒石。",
    "T51n2073_005:0171b21_39": "寫涅槃法華經各一部。",
    "T51n2073_005:0171b21_40": "初移入龕之際。",
    "T51n2073_005:0171b21_41": "石涅槃法華。",
    "T51n2073_005:0171b22_42": "并放光明。",
    "T51n2073_005:0171b22_43": "滿十餘里。",
    "T51n2073_005:0171b22_44": "舉眾咸覩。",
    "T51n2073_005:0171b22_45": "感悟無涯。",
    "T51n2073_005:0171b24_0": "處士孫思邈。",
    "T51n2073_005:0171b24_1": "雍州永安人也。",
    "T51n2073_005:0171b24_2": "神彩高遠。",
    "T51n2073_005:0171b24_3": "儀貌魁梧。",
    "T51n2073_005:0171b25_4": "身長七尺。",
    "T51n2073_005:0171b25_5": "眉目疎朗。",
    "T51n2073_005:0171b25_6": "然學該內外。",
    "T51n2073_005:0171b25_7": "尤閑醫藥。",
    "T51n2073_005:0171b26_8": "陰陽術數星曆卜筮。",
    "T51n2073_005:0171b26_9": "無不該通。",
    "T51n2073_005:0171b26_10": "善養性好服食。",
    "T51n2073_005:0171b27_11": "嘗服流珠丹及雲母紛。",
    "T51n2073_005:0171b27_12": "肌膚光潤。",
    "T51n2073_005:0171b27_13": "齒髮不虧。",
    "T51n2073_005:0171b28_14": "耆老相傳云。",
    "T51n2073_005:0171b28_15": "百餘歲視其形狀。",
    "T51n2073_005:0171b28_16": "如年七八十許。",
    "T51n2073_005:0171b29_17": "義寧元年高祖。",
    "T51n2073_005:0171b29_18": "起義并州時。",
    "T51n2073_005:0171b29_19": "邈在境內。",
    "T51n2073_005:0171c01_20": "高祖知其宏達。",
    "T51n2073_005:0171c01_21": "以禮待之。",
    "T51n2073_005:0171c01_22": "命為軍頭。",
    "T51n2073_005:0171c01_23": "任之四品。",
    "T51n2073_005:0171c02_24": "固辭不受。",
    "T51n2073_005:0171c02_25": "後歷遊諸處。",
    "T51n2073_005:0171c02_26": "不恒所居。",
    "T51n2073_005:0171c02_27": "隨時利物。",
    "T51n2073_005:0171c03_28": "專以醫方。",
    "T51n2073_005:0171c03_29": "為事有來請問。",
    "T51n2073_005:0171c03_30": "無不拯療。",
    "T51n2073_005:0171c04_0": "常勸道俗諸人。",
    "T51n2073_005:0171c04_1": "寫華嚴經七百五十餘部。",
    "T51n2073_005:0171c04_2": "上元儀鳳之年。",
    "T51n2073_005:0171c05_3": "居長安萬年二縣之境。",
    "T51n2073_005:0171c05_4": "嘗與人談話。",
    "T51n2073_005:0171c06_5": "說齊魏人物及洛陽故都。",
    "T51n2073_005:0171c06_6": "城中朝士。",
    "T51n2073_005:0171c06_7": "并寺宇眾僧。",
    "T51n2073_005:0171c07_8": "宛然目擊。",
    "T51n2073_005:0171c07_9": "及將更問。",
    "T51n2073_005:0171c07_10": "便即不言。",
    "T51n2073_005:0171c07_11": "嘗撰古今名醫妙術。",
    "T51n2073_005:0171c08_12": "號曰孫氏千金方。",
    "T51n2073_005:0171c08_13": "凡六十卷。",
    "T51n2073_005:0171c09_14": "備窮時用。",
    "T51n2073_005:0171c09_15": "進上高祖。",
    "T51n2073_005:0171c09_16": "高祖賞以束帛。",
    "T51n2073_005:0171c09_17": "將授榮班。",
    "T51n2073_005:0171c10_18": "苦辭不受。",
    "T51n2073_005:0171c10_19": "時召入內。",
    "T51n2073_005:0171c10_20": "旬月不出待詔禁中。",
    "T51n2073_005:0171c11_21": "甚見優竉。",
    "T51n2073_005:0171c11_22": "帝嘗縱容顧問。",
    "T51n2073_005:0171c11_23": "修何功德。",
    "T51n2073_005:0171c11_24": "為最佳耶。",
    "T51n2073_005:0171c12_25": "邈對曰。",
    "T51n2073_005:0171c12_26": "天皇何不讀華嚴經。",
    "T51n2073_005:0171c12_27": "帝問何故。",
    "T51n2073_005:0171c13_0": "邈曰。",
    "T51n2073_005:0171c13_1": "天皇大人。",
    "T51n2073_005:0171c13_2": "須讀大典。",
    "T51n2073_005:0171c13_3": "譬如寶器函蓋宜相稱耳。",
    "T51n2073_005:0171c14_4": "帝曰。",
    "T51n2073_005:0171c14_5": "若論大經。",
    "T51n2073_005:0171c14_6": "近者玄奘法師所譯大般若凡六百卷。",
    "T51n2073_005:0171c15_7": "寧不大乎。",
    "T51n2073_005:0171c15_8": "邈曰。",
    "T51n2073_005:0171c15_9": "般若空宗。",
    "T51n2073_005:0171c16_0": "乃華嚴經中。",
    "T51n2073_005:0171c16_1": "枝條出矣。",
    "T51n2073_005:0171c16_2": "帝深信之。",
    "T51n2073_005:0171c16_3": "永淳前卒。",
    "T51n2073_005:0171c17_4": "邈有子曰行真又名元一。",
    "T51n2073_005:0171c17_5": "貞正該博。",
    "T51n2073_005:0171c17_6": "強記洽聞。",
    "T51n2073_005:0171c18_7": "深思法要。",
    "T51n2073_005:0171c18_8": "迴向一乘。",
    "T51n2073_005:0171c18_9": "繼習父風。",
    "T51n2073_005:0171c18_10": "亦以華嚴為業。",
    "T51n2073_005:0171c19_11": "知名當代。",
    "T51n2073_005:0171c19_12": "實為高信士焉。",
    "T51n2073_005:0171c20_0": "雍州萬年縣人。",
    "T51n2073_005:0171c20_1": "康阿祿山。",
    "T51n2073_005:0171c20_2": "以調露二年五月一日。",
    "T51n2073_005:0171c21_3": "染患遂亡。",
    "T51n2073_005:0171c21_4": "至五日將殯載至墓所。",
    "T51n2073_005:0171c21_5": "未及下車。",
    "T51n2073_005:0171c22_6": "聞棺中有聲。",
    "T51n2073_005:0171c22_7": "親里疑其重活。",
    "T51n2073_005:0171c22_8": "剖棺視之。",
    "T51n2073_005:0171c23_0": "祿山果蘇。",
    "T51n2073_005:0171c23_1": "起載至家中。",
    "T51n2073_005:0171c23_2": "自說被冥道誤追。",
    "T51n2073_005:0171c23_3": "在閻羅王前。",
    "T51n2073_005:0171c24_4": "總有三十五人。",
    "T51n2073_005:0171c24_5": "共作一行。",
    "T51n2073_005:0171c24_6": "其中有新豐果毅并祿山等十五人。",
    "T51n2073_005:0171c25_7": "先有戒行。",
    "T51n2073_005:0171c25_8": "同於王所。",
    "T51n2073_005:0171c26_9": "披訴得還。",
    "T51n2073_005:0171c26_10": "甞時見東市藥行人阿容師。",
    "T51n2073_005:0171c27_0": "師去調露元年患死。",
    "T51n2073_005:0171c27_1": "為生時煮鷄子。",
    "T51n2073_005:0171c27_2": "與七百人。",
    "T51n2073_005:0171c28_3": "入鑊湯地獄。",
    "T51n2073_005:0171c28_4": "先識祿山。",
    "T51n2073_005:0171c28_5": "遂憑屬曰。",
    "T51n2073_005:0171c28_6": "吾第四子行證。",
    "T51n2073_005:0171c29_7": "稍有仁慈。",
    "T51n2073_005:0171c29_8": "君為我語之。",
    "T51n2073_005:0171c29_9": "令寫華嚴經一部。",
    "T51n2073_005:0172a01_10": "餘不相當。",
    "T51n2073_005:0172a01_11": "若得為寫。",
    "T51n2073_005:0172a01_12": "此七百人。",
    "T51n2073_005:0172a01_13": "皆得解脫矣。",
    "T51n2073_005:0172a02_14": "山後林健。",
    "T51n2073_005:0172a02_15": "往新豐。",
    "T51n2073_005:0172a02_16": "尋覓果毅。",
    "T51n2073_005:0172a02_17": "相見悲喜。",
    "T51n2073_005:0172a03_18": "猶若故交。",
    "T51n2073_005:0172a03_19": "各說所由。",
    "T51n2073_005:0172a03_20": "暗相符會。",
    "T51n2073_005:0172a03_21": "又往東市賣藥阿家。",
    "T51n2073_005:0172a04_22": "以容師之言。",
    "T51n2073_005:0172a04_23": "具告行證。",
    "T51n2073_005:0172a04_24": "證大悲感。",
    "T51n2073_005:0172a05_25": "遂於西大原寺法藏師處。",
    "T51n2073_005:0172a05_26": "請華嚴經。",
    "T51n2073_005:0172a05_27": "令人書寫。",
    "T51n2073_005:0172a06_28": "初自容師亡後。",
    "T51n2073_005:0172a06_29": "家人寂無夢想。",
    "T51n2073_005:0172a06_30": "至初寫經之夕。",
    "T51n2073_005:0172a07_31": "合家同夢。",
    "T51n2073_005:0172a07_32": "其父來喜暢無已。",
    "T51n2073_005:0172a07_33": "到永隆元年八月。",
    "T51n2073_005:0172a08_34": "莊嚴周畢。",
    "T51n2073_005:0172a08_35": "請大德沙門慶經設供。",
    "T51n2073_005:0172a09_0": "祿山爾日亦在會中。",
    "T51n2073_005:0172a09_1": "乃見容師等七百鬼徒。",
    "T51n2073_005:0172a10_0": "并來齋處。",
    "T51n2073_005:0172a10_1": "禮敬三寶。",
    "T51n2073_005:0172a10_2": "同跪僧前。",
    "T51n2073_005:0172a10_3": "懺悔受戒。",
    "T51n2073_005:0172a10_4": "事畢而去。",
    "T51n2073_005:0172a11_5": "山既備矚冥司深信罪業。",
    "T51n2073_005:0172a11_6": "遂屏絕人事。",
    "T51n2073_005:0172a12_7": "永棄俗緣。",
    "T51n2073_005:0172a12_8": "入太白終南。",
    "T51n2073_005:0172a12_9": "專務栖隱。",
    "T51n2073_005:0172a12_10": "後不知所終。",
    "T51n2073_005:0172a14_0": "雜述第十",
    "T51n2073_005:0172a15_0": "華嚴經中佛名二卷　菩薩名一卷",
    "T51n2073_005:0172a16_0": "右不知誰所集也。",
    "T51n2073_005:0172a16_1": "但鳩集闕略。",
    "T51n2073_005:0172a16_2": "未能備盡。",
    "T51n2073_005:0172a17_0": "今沙門賢首更廣其塵。",
    "T51n2073_005:0172a17_1": "頗為詳悉。",
    "T51n2073_005:0172a18_0": "普禮法一十五拜",
    "T51n2073_005:0172a19_0": "右天台山智顗禪師所撰。",
    "T51n2073_005:0172a19_1": "其拜首皆稱普禮。",
    "T51n2073_005:0172a20_2": "末皆稱盧舍那佛。",
    "T51n2073_005:0172a20_3": "其間具引寂滅道場等七處八會之名。",
    "T51n2073_005:0172a21_4": "今江表盛行。",
    "T51n2073_005:0172a21_5": "不復繁敘。",
    "T51n2073_005:0172a22_0": "顗仍判華嚴。",
    "T51n2073_005:0172a22_1": "為圓滿頓教(云云)。",
    "T51n2073_005:0172a23_0": "華嚴齋記一卷",
    "T51n2073_005:0172a24_0": "右竟陵文宣王撰。",
    "T51n2073_005:0172a24_1": "自齊梁已來。",
    "T51n2073_005:0172a24_2": "每多方廣齋集。",
    "T51n2073_005:0172a25_3": "皆依此修行也。",
    "T51n2073_005:0172a25_4": "今益州宏法師。",
    "T51n2073_005:0172a25_5": "亦以華嚴為志。",
    "T51n2073_005:0172a26_6": "勸其士俗。",
    "T51n2073_005:0172a26_7": "清信等或五十人或六十人。",
    "T51n2073_005:0172a27_8": "同為福社。",
    "T51n2073_005:0172a27_9": "人各誦華嚴一卷。",
    "T51n2073_005:0172a27_10": "以同經部。",
    "T51n2073_005:0172a28_11": "每十五日。",
    "T51n2073_005:0172a28_12": "一家設齋。",
    "T51n2073_005:0172a28_13": "嚴道場高座。",
    "T51n2073_005:0172a28_14": "供主昇座。",
    "T51n2073_005:0172a29_15": "餘徒復位。",
    "T51n2073_005:0172a29_16": "各誦其經畢而方散。",
    "T51n2073_005:0172a29_17": "斯亦齋集之流也。",
    "T51n2073_005:0172b02_0": "供養十門儀式",
    "T51n2073_005:0172b03_0": "右沙門智儼撰。",
    "T51n2073_005:0172b04_0": "善財童子諸知識錄",
    "T51n2073_005:0172b05_0": "右沙門彥琮撰。",
    "T51n2073_005:0172b06_0": "華嚴旨歸一卷十門。",
    "T51n2073_005:0172b06_1": "一說經處。",
    "T51n2073_005:0172b06_2": "二說經時。",
    "T51n2073_005:0172b06_3": "三說經佛。",
    "T51n2073_005:0172b07_4": "四說經眾。",
    "T51n2073_005:0172b07_5": "五說經義。",
    "T51n2073_005:0172b07_6": "六說經教。",
    "T51n2073_005:0172b07_7": "七顯經義。",
    "T51n2073_005:0172b08_8": "八釋經意。",
    "T51n2073_005:0172b08_9": "九辨經益。",
    "T51n2073_005:0172b08_10": "十示經圓。",
    "T51n2073_005:0172b09_0": "右於上十門。",
    "T51n2073_005:0172b09_1": "各以十義解釋。",
    "T51n2073_005:0172b09_2": "通并百門以顯經意。",
    "T51n2073_005:0172b10_3": "遂令浩污之旨。",
    "T51n2073_005:0172b10_4": "宛在目前。",
    "T51n2073_005:0172b10_5": "具如彼釋。",
    "T51n2073_005:0172b11_6": "沙門法藏所述。",
    "T51n2073_005:0172b12_0": "華嚴三昧觀一卷十門",
    "T51n2073_005:0172b13_0": "右於上十門。",
    "T51n2073_005:0172b13_1": "亦各以十義。",
    "T51n2073_005:0172b13_2": "辨其所要。",
    "T51n2073_005:0172b13_3": "務令修成普賢願行。",
    "T51n2073_005:0172b14_4": "結金剛種。",
    "T51n2073_005:0172b14_5": "作菩提因。",
    "T51n2073_005:0172b14_6": "當來得預華嚴海會。",
    "T51n2073_005:0172b15_7": "用於天台法華三昧觀。",
    "T51n2073_005:0172b15_8": "諸修行者。",
    "T51n2073_005:0172b16_9": "足為心鏡耳。",
    "T51n2073_005:0172b16_10": "沙門法藏所述。",
    "T51n2073_005:0172b17_0": "華嚴綱目一卷　華嚴玄義章一卷　華嚴教分記三卷右并大章疏之外。",
    "T51n2073_005:0172b19_1": "隨人所問。",
    "T51n2073_005:0172b19_2": "隨義而說。",
    "T51n2073_005:0172b19_3": "錄以成卷。",
    "T51n2073_005:0172b20_4": "竝顯此經意。",
    "T51n2073_005:0172b20_5": "法藏所述也。",
    "T51n2073_005:0172b21_0": "華嚴翻梵語一卷(舊經)華嚴梵語及音義一卷(新經)右新舊二經。",
    "T51n2073_005:0172b22_1": "所有梵語。",
    "T51n2073_005:0172b22_2": "及新經難字。",
    "T51n2073_005:0172b22_3": "悉具翻及音釋。",
    "T51n2073_005:0172b23_4": "讀經之士實所要焉。",
    "T51n2073_005:0172b24_0": "華嚴三寶禮十首",
    "T51n2073_005:0172b25_0": "右初禮云。",
    "T51n2073_005:0172b25_1": "南無第一會。",
    "T51n2073_005:0172b25_2": "菩提樹下師子座上。",
    "T51n2073_005:0172b26_3": "盧舍那佛廣。",
    "T51n2073_005:0172b26_4": "及十方遍周法界。",
    "T51n2073_005:0172b26_5": "一切諸佛所說。",
    "T51n2073_005:0172b27_6": "甚深果德法海。",
    "T51n2073_005:0172b27_7": "并普賢菩薩等。",
    "T51n2073_005:0172b27_8": "微塵數菩薩摩訶薩。",
    "T51n2073_005:0172b28_9": "一切三寶。",
    "T51n2073_005:0172b28_10": "後七會。",
    "T51n2073_005:0172b28_11": "稱處名法名菩薩名。",
    "T51n2073_005:0172b29_12": "別餘皆同上。",
    "T51n2073_005:0172b29_13": "其第九。",
    "T51n2073_005:0172b29_14": "禮中本經四十九萬八千八百偈華嚴經中三寶。",
    "T51n2073_005:0172c02_15": "第十。",
    "T51n2073_005:0172c02_16": "禮上本十大千界微塵數偈華嚴經中三寶。",
    "T51n2073_005:0172c03_17": "并但稱說彼經佛法及普賢等。",
    "T51n2073_005:0172c04_0": "可知。",
    "T51n2073_005:0172c05_0": "華嚴讚禮十卷十首",
    "T51n2073_005:0172c06_0": "右初禮云。",
    "T51n2073_005:0172c06_1": "至心歸命禮華嚴第一會。",
    "T51n2073_005:0172c06_2": "樹王登寶位。",
    "T51n2073_005:0172c07_3": "蓮界演華文。",
    "T51n2073_005:0172c07_4": "聖眾眉間出。",
    "T51n2073_005:0172c07_5": "神光發面門。",
    "T51n2073_005:0172c08_6": "座中流慧海。",
    "T51n2073_005:0172c08_7": "毛孔現慈雲。",
    "T51n2073_005:0172c08_8": "一塵含法界。",
    "T51n2073_005:0172c09_9": "九世念中分。",
    "T51n2073_005:0172c09_10": "願共諸眾生。",
    "T51n2073_005:0172c09_11": "同遊華藏界。",
    "T51n2073_005:0172c10_0": "其第二會讚云。",
    "T51n2073_005:0172c10_1": "龍堂信雲廣。",
    "T51n2073_005:0172c10_2": "海印法流深。",
    "T51n2073_005:0172c11_0": "輪光極空際。",
    "T51n2073_005:0172c11_1": "名諦盡圓音。",
    "T51n2073_005:0172c11_2": "賢初該六位。",
    "T51n2073_005:0172c11_3": "傳首十方臨。",
    "T51n2073_005:0172c12_4": "主伴恒文映。",
    "T51n2073_005:0172c12_5": "帝網理難尋。",
    "T51n2073_005:0172c12_6": "第三會云。",
    "T51n2073_005:0172c13_7": "聚日臨山頂。",
    "T51n2073_005:0172c13_8": "雲集滿虛空。",
    "T51n2073_005:0172c13_9": "覺樹初無起。",
    "T51n2073_005:0172c14_10": "天堂現金容。",
    "T51n2073_005:0172c15_0": "隋州司法狄仁[王*萑]事。",
    "T51n2073_005:0172c15_1": "調露二年。",
    "T51n2073_005:0172c15_2": "高宗將封嵩嶽諸州宰牧。",
    "T51n2073_005:0172c16_3": "各以六科舉人。",
    "T51n2073_005:0172c16_4": "隋州刺史臨真公。",
    "T51n2073_005:0172c17_5": "守節舉送。",
    "T51n2073_005:0172c17_6": "東都榱寄主人。",
    "T51n2073_005:0172c17_7": "宿於賣藥之室。",
    "T51n2073_005:0172c18_8": "夜夢有人引行遊觀入一大室。",
    "T51n2073_005:0172c18_9": "莫知邊際。",
    "T51n2073_005:0172c19_10": "仰視但見渏井垂蓮。",
    "T51n2073_005:0172c19_11": "圓泉覆海。",
    "T51n2073_005:0172c19_12": "金花方鏡。",
    "T51n2073_005:0172c20_13": "殊勝莊嚴。",
    "T51n2073_005:0172c20_14": "幡上皆有諸佛菩薩形像。",
    "T51n2073_005:0172c21_15": "聞空中有聲曰。",
    "T51n2073_005:0172c21_16": "此是花嚴道場也。",
    "T51n2073_005:0172c21_17": "覺後慶懌兼倍。",
    "T51n2073_005:0172c22_18": "願造大幡。",
    "T51n2073_005:0172c22_19": "如夢所見。",
    "T51n2073_005:0172c22_20": "還至隋州。",
    "T51n2073_005:0172c23_0": "乃訪畫工。",
    "T51n2073_005:0172c23_1": "將事修造時。",
    "T51n2073_005:0172c23_2": "有安州范君及王生二人。",
    "T51n2073_005:0172c24_3": "來共圖畫。",
    "T51n2073_005:0172c24_4": "於興圓寺佛殿中。",
    "T51n2073_005:0172c24_5": "藻繪成就。",
    "T51n2073_005:0172c25_6": "長百餘尺。",
    "T51n2073_005:0172c25_7": "所用丹青。",
    "T51n2073_005:0172c25_8": "皆香水清潔。",
    "T51n2073_005:0172c25_9": "遂感一瑞鵲。",
    "T51n2073_005:0172c26_10": "每日飛來。",
    "T51n2073_005:0172c26_11": "馴擾畫處。",
    "T51n2073_005:0172c26_12": "曾無驚惕。",
    "T51n2073_005:0172c27_0": "凡經旬半後。",
    "T51n2073_005:0172c27_1": "欻不見。",
    "T51n2073_005:0172c27_2": "咸以為畫士清淨至誠之所致。",
    "T51n2073_005:0172c29_0": "華嚴經傳記卷第五"
}