[
    {
        "source_sentence": "白救度佛母讚",
        "from": "T20n1109_001:0484a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北京淨住寺住持阿旺扎什譯",
        "from": "T20n1109_001:0484a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納摩至尊聖救度佛母。",
        "from": "T20n1109_001:0484a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切病愆都哷救　　救度母前敬讚禮",
        "from": "T20n1109_001:0484a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白淨蓮華之中間　　其上敷陳月輪座",
        "from": "T20n1109_001:0484a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐現金剛跏趺母　　施願母前致敬禮",
        "from": "T20n1109_001:0484a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面如秋月光明相　　佛母身依皓魄輪",
        "from": "T20n1109_001:0484a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切莊嚴俱滿足　　持優鉢花前敬禮",
        "from": "T20n1109_001:0484a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體相具圓十六歲　　一切正覺彼之子",
        "from": "T20n1109_001:0484b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝躬持施隨欲應　　敬禮救度聖母前",
        "from": "T20n1109_001:0484b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皎潔白輪光色白　　八輻條上現八字",
        "from": "T20n1109_001:0484b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而有普同旋轉相　　向具輪前至敬禮",
        "from": "T20n1109_001:0484b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切剎土皆清淨　　多寶花遍佈其中",
        "from": "T20n1109_001:0484b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誕生三世諸佛母　　是母尊前致敬禮",
        "from": "T20n1109_001:0484b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖母度母救度母　　增益壽母如意輪",
        "from": "T20n1109_001:0484b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛母尊前勇祈禱　　為消我等壽緣魔",
        "from": "T20n1109_001:0484b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "病及一切苦難中　　仗爾有能祈保護",
        "from": "T20n1109_001:0484b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝及通常諸成就　　為皆賜我盡無餘",
        "from": "T20n1109_001:0484b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖母尊前誠敬者　　彼常憶念悉如子",
        "from": "T20n1109_001:0484b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊前我亦致禱祝　　惟祈常持慈悲鉤",
        "from": "T20n1109_001:0484b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛母勝身如月色　　窈窕柔善體端嚴",
        "from": "T20n1109_001:0484b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙相俱著寶莊飾　　而以佳絹為裙裳",
        "from": "T20n1109_001:0484b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華月輪寶座上　　兩足金剛跏趺坐",
        "from": "T20n1109_001:0484b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一面二臂具喜顏　　生三世諸佛之母",
        "from": "T20n1109_001:0484b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛母尊前常與跪　　今在尊前以微讚",
        "from": "T20n1109_001:0484b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所為我等修道時　　從此以往至菩提",
        "from": "T20n1109_001:0484b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消除其中諸逆緣　　願於順緣獲豐足",
        "from": "T20n1109_001:0484b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵答阿哷都答答阿哷都哷嘛嘛阿俞喇逋吶葉雜尼鴉阿納逋斯真沽嚕葉娑訶此呪遵御製大藏全呪校正書之此讚係西藏格隆羅卜藏薩木丹祈請二輩達󰪯喇嘛佛說于別蚌寺內落薩嶺堂中。",
        "from": "T20n1109_001:0484b23_33",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白救度佛母讚竟",
        "from": "T20n1109_001:0484b24_100",
        "context_with_next_sentence": false
    }
]