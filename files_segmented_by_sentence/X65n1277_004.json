{
    "X65n1277_004:0015b15_0": "高峰龍泉院因師集賢語錄卷之四",
    "X65n1277_004:0015b17_0": "六祖院住持小師　如瑛　編",
    "X65n1277_004:0015b18_0": "歌揚讚佛門",
    "X65n1277_004:0015b19_0": "三歸依",
    "X65n1277_004:0015b20_0": "歸依佛。",
    "X65n1277_004:0015b20_1": "補處慈氏如來。",
    "X65n1277_004:0015b20_2": "居內院蓮華臺。",
    "X65n1277_004:0015b20_3": "人間願早下生來。",
    "X65n1277_004:0015b21_4": "便作龍華三會。",
    "X65n1277_004:0015b21_5": "謠謌佩歌舞獻花。",
    "X65n1277_004:0015b21_6": "五雲仙隊雲仙隊。",
    "X65n1277_004:0015b22_7": "表應玉皇嘉瑞。",
    "X65n1277_004:0015b22_8": "瞻好相。",
    "X65n1277_004:0015b22_9": "證三昧。",
    "X65n1277_004:0015b22_10": "妙幢影裏奉慈尊。",
    "X65n1277_004:0015b23_11": "耳聽簫韶謌唄。",
    "X65n1277_004:0015b23_12": "出三界。",
    "X65n1277_004:0015b23_13": "兜率陀天。",
    "X65n1277_004:0015b23_14": "面禮千拜。",
    "X65n1277_004:0015b24_0": "歸依法。",
    "X65n1277_004:0015b24_1": "玉軸靈文寶偈。",
    "X65n1277_004:0015b24_2": "唐三請名不易。",
    "X65n1277_004:0015b24_3": "旃壇香水奉金書。",
    "X65n1277_004:0015c01_4": "鎮在龍王宮裏。",
    "X65n1277_004:0015c01_5": "色空異聞者凡夫。",
    "X65n1277_004:0015c01_6": "便登十地登十地。",
    "X65n1277_004:0015c02_7": "花藏海中遊戲。",
    "X65n1277_004:0015c02_8": "金盤滿香風吹。",
    "X65n1277_004:0015c02_9": "却來此處散天花。",
    "X65n1277_004:0015c03_10": "供養當今皇帝。",
    "X65n1277_004:0015c03_11": "當今帝。",
    "X65n1277_004:0015c03_12": "帝子王孫。",
    "X65n1277_004:0015c03_13": "千秋萬歲。",
    "X65n1277_004:0015c04_0": "歸依僧。",
    "X65n1277_004:0015c04_1": "圓覺聲聞賢聖。",
    "X65n1277_004:0015c04_2": "居南嶽與天台。",
    "X65n1277_004:0015c04_3": "祝融方廣絕塵埃。",
    "X65n1277_004:0015c05_4": "入定觀空不昧。",
    "X65n1277_004:0015c05_5": "駐幽涯虎伏龍降。",
    "X65n1277_004:0015c05_6": "高道奇哉道奇哉。",
    "X65n1277_004:0015c06_7": "廣布六通自在。",
    "X65n1277_004:0015c06_8": "常應供十方界。",
    "X65n1277_004:0015c06_9": "尋聲赴感剎那時。",
    "X65n1277_004:0015c07_10": "此土他邦無礙。",
    "X65n1277_004:0015c07_11": "堪依賴。",
    "X65n1277_004:0015c07_12": "接引群生。",
    "X65n1277_004:0015c07_13": "盡超佛界。",
    "X65n1277_004:0015c08_0": "古陽關",
    "X65n1277_004:0015c09_0": "稽首歸依佛。",
    "X65n1277_004:0015c09_1": "初降誕摩耶藍園裏。",
    "X65n1277_004:0015c09_2": "十九逾城去向雪嶺修持。",
    "X65n1277_004:0015c10_3": "蘆芽穿膝朝夕噉一麻并一麥。",
    "X65n1277_004:0015c10_4": "修苦行。",
    "X65n1277_004:0015c10_5": "六年滿。",
    "X65n1277_004:0015c11_6": "證大覺菩提。",
    "X65n1277_004:0015c11_7": "我佛慈悲放毫光。",
    "X65n1277_004:0015c11_8": "照三途離苦迷。",
    "X65n1277_004:0015c11_9": "釋梵諸天歸向。",
    "X65n1277_004:0015c12_10": "三界瞻依。",
    "X65n1277_004:0015c12_11": "龍華會裏普為眾生親受記。",
    "X65n1277_004:0015c13_0": "談妙法。",
    "X65n1277_004:0015c13_1": "不思議。",
    "X65n1277_004:0015c13_2": "有請降無違。",
    "X65n1277_004:0015c14_0": "稽首歸依法。",
    "X65n1277_004:0015c14_1": "菩薩問因緣百萬遍。",
    "X65n1277_004:0015c14_2": "佛演真詮廣大金口親宣。",
    "X65n1277_004:0015c15_3": "龍宮海藏。",
    "X65n1277_004:0015c15_4": "願常轉法輪度有緣。",
    "X65n1277_004:0015c15_5": "真秘密。",
    "X65n1277_004:0015c15_6": "無窮盡。",
    "X65n1277_004:0015c16_7": "超彼岸舟船。",
    "X65n1277_004:0015c16_8": "信受精專去千災。",
    "X65n1277_004:0015c16_9": "降吉祥福壽延。",
    "X65n1277_004:0015c16_10": "是夕香花羅列。",
    "X65n1277_004:0015c17_11": "法樂連天。",
    "X65n1277_004:0015c17_12": "慈悲方便品類投誠作福田。",
    "X65n1277_004:0015c18_0": "今頂禮。",
    "X65n1277_004:0015c18_1": "不違誓。",
    "X65n1277_004:0015c18_2": "有請降臨筵。",
    "X65n1277_004:0015c19_0": "稽首歸依僧。",
    "X65n1277_004:0015c19_1": "住世在方廣與天台。",
    "X65n1277_004:0015c19_2": "南岳祝融峯頂逈絕塵埃。",
    "X65n1277_004:0015c20_3": "親蒙佛囑。",
    "X65n1277_004:0015c20_4": "應此土他方天上回。",
    "X65n1277_004:0015c20_5": "或伏虎。",
    "X65n1277_004:0015c20_6": "居岩畔。",
    "X65n1277_004:0015c21_7": "或振錫浮盃。",
    "X65n1277_004:0015c21_8": "閑臥白雲堆。",
    "X65n1277_004:0015c21_9": "被靈禽呌聲驚起來。",
    "X65n1277_004:0015c21_10": "闌散嵓前入定。",
    "X65n1277_004:0015c22_11": "覺樹花開。",
    "X65n1277_004:0015c22_12": "珊瑚樹下更把青松月裏栽。",
    "X65n1277_004:0015c23_0": "真瀟洒。",
    "X65n1277_004:0015c23_1": "無餘事。",
    "X65n1277_004:0015c23_2": "有請降臨來。",
    "X65n1277_004:0015c24_0": "喬鼓社",
    "X65n1277_004:0016a01_0": "歸依佛。",
    "X65n1277_004:0016a01_1": "釋迦是真慈父。",
    "X65n1277_004:0016a01_2": "化現身形離補處。",
    "X65n1277_004:0016a01_3": "駕白象乘雲去。",
    "X65n1277_004:0016a02_4": "向皇宮托蔭摩耶。",
    "X65n1277_004:0016a02_5": "九龍吐水金盆浴。",
    "X65n1277_004:0016a02_6": "正得丈六真金相。",
    "X65n1277_004:0016a03_7": "被波旬來請去。",
    "X65n1277_004:0016a04_0": "歸依法。",
    "X65n1277_004:0016a04_1": "法華是經中髓。",
    "X65n1277_004:0016a04_2": "更說華嚴寶積經。",
    "X65n1277_004:0016a04_3": "大般若波羅蜜。",
    "X65n1277_004:0016a05_4": "金剛座上生彌勒。",
    "X65n1277_004:0016a05_5": "瑜珈孔雀真秘密。",
    "X65n1277_004:0016a05_6": "龍宮藏內諸經卷。",
    "X65n1277_004:0016a06_7": "卷卷是佛思議。",
    "X65n1277_004:0016a07_0": "歸依僧。",
    "X65n1277_004:0016a07_1": "僧是累劫脩緣至。",
    "X65n1277_004:0016a07_2": "奉勑皇恩身不易。",
    "X65n1277_004:0016a07_3": "掛三事如來衣。",
    "X65n1277_004:0016a08_4": "向人間應供作福田。",
    "X65n1277_004:0016a08_5": "手持錫杖降龍虎。",
    "X65n1277_004:0016a08_6": "林間樹下安禪座。",
    "X65n1277_004:0016a09_7": "紅塵事不顧。",
    "X65n1277_004:0016a10_0": "三歸依了讚祝願。",
    "X65n1277_004:0016a10_1": "當今帝萬歲千秋常如此。",
    "X65n1277_004:0016a10_2": "願福壽山河齊。",
    "X65n1277_004:0016a11_3": "太子重臣巍巍。",
    "X65n1277_004:0016a11_4": "民安國泰謌歡喜。",
    "X65n1277_004:0016a11_5": "諸邦小國無爭戰。",
    "X65n1277_004:0016a12_6": "八方盡來朝帝。",
    "X65n1277_004:0016a13_0": "柳含煙",
    "X65n1277_004:0016a14_0": "佛寶嘆無窮。",
    "X65n1277_004:0016a14_1": "功成無量劫中。",
    "X65n1277_004:0016a14_2": "巍巍丈六紫金容。",
    "X65n1277_004:0016a14_3": "覺道雪山峰。",
    "X65n1277_004:0016a15_4": "眉際玉毫光燦爛。",
    "X65n1277_004:0016a15_5": "照開六道昏蒙。",
    "X65n1277_004:0016a15_6": "龍華三會願相逢。",
    "X65n1277_004:0016a16_7": "演說法真宗。",
    "X65n1277_004:0016a17_0": "法寶實難量。",
    "X65n1277_004:0016a17_1": "如來金口宣揚。",
    "X65n1277_004:0016a17_2": "龍宮海藏散天香。",
    "X65n1277_004:0016a17_3": "覺者誦琅琅。",
    "X65n1277_004:0016a18_4": "玉軸霞絛金寫字。",
    "X65n1277_004:0016a18_5": "似排秋鴈成行。",
    "X65n1277_004:0016a18_6": "只因三藏請來唐。",
    "X65n1277_004:0016a19_7": "千古為敷揚。",
    "X65n1277_004:0016a20_0": "僧寶不思議。",
    "X65n1277_004:0016a20_1": "身披三事雲衣。",
    "X65n1277_004:0016a20_2": "浮盃振錫剎那時。",
    "X65n1277_004:0016a20_3": "赴感應隨機。",
    "X65n1277_004:0016a21_4": "堪作人間功德主。",
    "X65n1277_004:0016a21_5": "堅持戒行無違。",
    "X65n1277_004:0016a21_6": "我今稽首願遙知。",
    "X65n1277_004:0016a22_7": "振錫杖提携。",
    "X65n1277_004:0016a23_0": "鶴冲天",
    "X65n1277_004:0016a24_0": "稽首仁聖。",
    "X65n1277_004:0016a24_1": "巍巍相奇絕。",
    "X65n1277_004:0016a24_2": "十月母腹中安然歇。",
    "X65n1277_004:0016a24_3": "恰值初夏至朱明節天花烈。",
    "X65n1277_004:0016b01_4": "無憂林樹下。",
    "X65n1277_004:0016b01_5": "聖母攀枝。",
    "X65n1277_004:0016b01_6": "太子降生時節。",
    "X65n1277_004:0016b03_0": "悲心弘大。",
    "X65n1277_004:0016b03_1": "虔叩無為悅。",
    "X65n1277_004:0016b03_2": "三乘秘密言廣宣說。",
    "X65n1277_004:0016b03_3": "龍華三會指人天路皆滋徹。",
    "X65n1277_004:0016b04_4": "清凉除惱熱。",
    "X65n1277_004:0016b04_5": "如月澄輝。",
    "X65n1277_004:0016b04_6": "丈六金容皎潔。",
    "X65n1277_004:0016b06_0": "威嚴不動。",
    "X65n1277_004:0016b06_1": "毫光遍布烈。",
    "X65n1277_004:0016b06_2": "□曜大千界救生滅。",
    "X65n1277_004:0016b06_3": "我今稱讚禮本師面如滿月。",
    "X65n1277_004:0016b07_4": "牟尼闡洪慈。",
    "X65n1277_004:0016b07_5": "發願歸依。",
    "X65n1277_004:0016b07_6": "望接羣生超脫(讚釋迦)。",
    "X65n1277_004:0016b09_0": "千秋歲",
    "X65n1277_004:0016b10_0": "志心信禮釋迦牟尼佛。",
    "X65n1277_004:0016b10_1": "為三界師四生父。",
    "X65n1277_004:0016b10_2": "玉毫眉際現。",
    "X65n1277_004:0016b11_3": "金口談妙語。",
    "X65n1277_004:0016b11_4": "潤羣生如朽木沾甘露。",
    "X65n1277_004:0016b11_5": "八十隨形化。",
    "X65n1277_004:0016b12_0": "三十二相。",
    "X65n1277_004:0016b12_1": "具現慈悲相救諸苦。",
    "X65n1277_004:0016b12_2": "我今稽首禮。",
    "X65n1277_004:0016b12_3": "惟願垂加護。",
    "X65n1277_004:0016b13_4": "當來世捨閻浮生淨土。",
    "X65n1277_004:0016b13_5": "(讚釋迦)志心信禮觀世音菩薩。",
    "X65n1277_004:0016b14_6": "現慈悲相聖皎潔。",
    "X65n1277_004:0016b14_7": "眉灣如翠柳。",
    "X65n1277_004:0016b15_8": "面圓如滿月。",
    "X65n1277_004:0016b15_9": "隨物現化羣生十方剎。",
    "X65n1277_004:0016b15_10": "瞻禮災殃散。",
    "X65n1277_004:0016b16_0": "聞名罪消滅。",
    "X65n1277_004:0016b16_1": "現香花會如星列。",
    "X65n1277_004:0016b16_2": "法樂連天降。",
    "X65n1277_004:0016b16_3": "絲竹聲和悅。",
    "X65n1277_004:0016b17_4": "願散誠垂攝受鑒情切。",
    "X65n1277_004:0016b17_5": "(讚觀音)志心信禮南岩定光佛。",
    "X65n1277_004:0016b18_6": "現白衣相當金闕。",
    "X65n1277_004:0016b18_7": "仁宗親頂禮。",
    "X65n1277_004:0016b19_8": "天下災消滅。",
    "X65n1277_004:0016b19_9": "御書降賜紫號。",
    "X65n1277_004:0016b19_10": "經年月盤古碑銘在。",
    "X65n1277_004:0016b20_0": "波利禪師說。",
    "X65n1277_004:0016b20_1": "自道場興五百劫。",
    "X65n1277_004:0016b20_2": "香花雲靉靆。",
    "X65n1277_004:0016b20_3": "檀信修巖穴。",
    "X65n1277_004:0016b21_4": "常供養圓應師大菩薩(讚定光)。",
    "X65n1277_004:0016b22_0": "志心信禮熾盛光如來。",
    "X65n1277_004:0016b22_1": "自在天中出現。",
    "X65n1277_004:0016b22_2": "大威德神通變。",
    "X65n1277_004:0016b23_3": "紅蓮臺上紫金容。",
    "X65n1277_004:0016b23_4": "爍爍火輪火焰遊天漢。",
    "X65n1277_004:0016b23_5": "十二宮中遊行皆遍。",
    "X65n1277_004:0016b24_6": "遊皆偏。",
    "X65n1277_004:0016b24_7": "惡曜妖星漸散。",
    "X65n1277_004:0016b24_8": "為家國除災難。",
    "X65n1277_004:0016c01_0": "金木水火土星臨。",
    "X65n1277_004:0016c01_1": "但向金容發願飜為善。",
    "X65n1277_004:0016c01_2": "須知慈悲救度方便(讚熾盛光佛)。",
    "X65n1277_004:0016c03_0": "五福降中天",
    "X65n1277_004:0016c04_0": "我等志心歸命禮。",
    "X65n1277_004:0016c04_1": "釋迦牟尼初現化身。",
    "X65n1277_004:0016c04_2": "摩耶感夢殊異。",
    "X65n1277_004:0016c05_3": "月滿藍園誕質。",
    "X65n1277_004:0016c05_4": "動足蓮隨步移。",
    "X65n1277_004:0016c05_5": "梵釋諸天覩斯祥瑞嘆希奇。",
    "X65n1277_004:0016c07_0": "迤邐長成文武備。",
    "X65n1277_004:0016c07_1": "三端六藝向四門遊。",
    "X65n1277_004:0016c07_2": "見生老病死苦。",
    "X65n1277_004:0016c08_3": "相催傷嗟便回。",
    "X65n1277_004:0016c08_4": "靜居空中報知。",
    "X65n1277_004:0016c08_5": "夜半逾城漸登雪嶺去修持。",
    "X65n1277_004:0016c10_0": "遣匿回文奏父王。",
    "X65n1277_004:0016c10_1": "不須愁悲他日道成。",
    "X65n1277_004:0016c10_2": "却回朝現皇帝。",
    "X65n1277_004:0016c11_3": "六載辛懃行滿。",
    "X65n1277_004:0016c11_4": "時受牧女乳糜。",
    "X65n1277_004:0016c11_5": "沐浴泥蓮金剛寶座證菩提。",
    "X65n1277_004:0016c13_0": "天魔眷屬妬人師。",
    "X65n1277_004:0016c13_1": "惡心便起。",
    "X65n1277_004:0016c13_2": "號令妖兵鬼將。",
    "X65n1277_004:0016c13_3": "各逞雄威。",
    "X65n1277_004:0016c14_4": "鏘刀劒戟近。",
    "X65n1277_004:0016c14_5": "世尊紅蓮襯體。",
    "X65n1277_004:0016c14_6": "覩此神通應時回向却歸依。",
    "X65n1277_004:0016c16_0": "冤魔退已聚鹿苑。",
    "X65n1277_004:0016c16_1": "三轉四諦自後宣揚。",
    "X65n1277_004:0016c16_2": "妙教廣度羣迷。",
    "X65n1277_004:0016c17_3": "我今讚祝祚。",
    "X65n1277_004:0016c17_4": "聖君永固帝基。",
    "X65n1277_004:0016c17_5": "願諸有情同登正悟無生理(讚釋迦)。",
    "X65n1277_004:0016c19_0": "臨江仙",
    "X65n1277_004:0016c20_0": "三大劫修觀自在。",
    "X65n1277_004:0016c20_1": "時光果證菩提。",
    "X65n1277_004:0016c20_2": "補陀山上座巍巍。",
    "X65n1277_004:0016c21_0": "手持甘露水。",
    "X65n1277_004:0016c21_1": "身掛六銖衣。",
    "X65n1277_004:0016c21_2": "救度眾生無盡意。",
    "X65n1277_004:0016c21_3": "毫光普照群迷。",
    "X65n1277_004:0016c22_4": "端嚴由解起慈悲。",
    "X65n1277_004:0016c22_5": "十方常供養。",
    "X65n1277_004:0016c22_6": "四海盡歸依。",
    "X65n1277_004:0016c23_0": "(讚觀音)",
    "X65n1277_004:0016c24_0": "地藏能仁弘誓廣。",
    "X65n1277_004:0016c24_1": "慈悲不倦隨機。",
    "X65n1277_004:0016c24_2": "手擕金錫振阿鼻。",
    "X65n1277_004:0017a01_0": "普天皆晃曜。",
    "X65n1277_004:0017a01_1": "遍地盡聲持。",
    "X65n1277_004:0017a01_2": "救度眾生盡盡。",
    "X65n1277_004:0017a01_3": "毫光照燭幽岐。",
    "X65n1277_004:0017a02_4": "三途八難息昏迷。",
    "X65n1277_004:0017a02_5": "有情超彼岸。",
    "X65n1277_004:0017a02_6": "無處不歸依。",
    "X65n1277_004:0017a02_7": "(讚地藏)南聖朝阿彌陀佛真堪羨。",
    "X65n1277_004:0017a05_8": "相好端嚴輝煥。",
    "X65n1277_004:0017a05_9": "毫光照輝大千。",
    "X65n1277_004:0017a05_10": "中現聲聞羅漢。",
    "X65n1277_004:0017a06_11": "目連舍利皆稱讚。",
    "X65n1277_004:0017a06_12": "有四弘誓願。",
    "X65n1277_004:0017a06_13": "提携含識悟無生。",
    "X65n1277_004:0017a07_14": "證菩提果滿。",
    "X65n1277_004:0017a08_0": "西方淨土凌空現。",
    "X65n1277_004:0017a08_1": "締網珠樓玉殿。",
    "X65n1277_004:0017a08_2": "琉璃池內瑞蓮生。",
    "X65n1277_004:0017a09_0": "引祥雲片片。",
    "X65n1277_004:0017a09_1": "佛慈廣大垂方便。",
    "X65n1277_004:0017a09_2": "誘群情十善。",
    "X65n1277_004:0017a09_3": "蓮臺九品證真常。",
    "X65n1277_004:0017a10_4": "度眾生無倦。",
    "X65n1277_004:0017a11_0": "今宵孝士營香饌。",
    "X65n1277_004:0017a11_1": "竭意精嚴蓬舘命。",
    "X65n1277_004:0017a11_2": "僧焚誦閱真詮。",
    "X65n1277_004:0017a12_0": "雪冤諐蠲免。",
    "X65n1277_004:0017a12_1": "三途八難皆消殄悟真如。",
    "X65n1277_004:0017a12_2": "彼岸靈魂憑此薦修緣。",
    "X65n1277_004:0017a13_3": "超率陀內院。",
    "X65n1277_004:0017a13_4": "(讚彌陀)五雷子南無佛陀耶。",
    "X65n1277_004:0017a15_5": "三界大慈父。",
    "X65n1277_004:0017a15_6": "苦海作舟航。",
    "X65n1277_004:0017a15_7": "飄流六趣。",
    "X65n1277_004:0017a15_8": "千百億化身。",
    "X65n1277_004:0017a16_9": "救我眾生苦。",
    "X65n1277_004:0017a16_10": "慈悲生。",
    "X65n1277_004:0017a16_11": "接引亡靈往生淨土。",
    "X65n1277_004:0017a17_0": "南無達磨耶。",
    "X65n1277_004:0017a17_1": "龍宮黃卷軸。",
    "X65n1277_004:0017a17_2": "般若波羅蜜。",
    "X65n1277_004:0017a17_3": "經留四句。",
    "X65n1277_004:0017a17_4": "十二部真詮。",
    "X65n1277_004:0017a18_5": "言言是佛語。",
    "X65n1277_004:0017a18_6": "五天書。",
    "X65n1277_004:0017a18_7": "接引亡靈往生淨土。",
    "X65n1277_004:0017a19_0": "南無僧伽耶。",
    "X65n1277_004:0017a19_1": "六通傳今古。",
    "X65n1277_004:0017a19_2": "金錫手中携。",
    "X65n1277_004:0017a19_3": "降龍伏虎。",
    "X65n1277_004:0017a19_4": "身掛紫檀衣。",
    "X65n1277_004:0017a20_5": "托鉢隨緣去。",
    "X65n1277_004:0017a20_6": "為化主。",
    "X65n1277_004:0017a20_7": "接引亡靈往生淨土。",
    "X65n1277_004:0017a21_0": "(薦亡讚三寶)",
    "X65n1277_004:0017a22_0": "巧箏笆",
    "X65n1277_004:0017a23_0": "釋迦佛。",
    "X65n1277_004:0017a23_1": "初因地緣起托質摩耶。",
    "X65n1277_004:0017a23_2": "無憂樹枝九龍吐香水。",
    "X65n1277_004:0017a24_3": "金盆浴洗沐浴太子降皇宮。",
    "X65n1277_004:0017a24_4": "父王知已。",
    "X65n1277_004:0017a24_5": "蓮華襯足。",
    "X65n1277_004:0017b01_0": "毫光罩體。",
    "X65n1277_004:0017b01_1": "嬪妃歡喜捧擁太子歸宮內。",
    "X65n1277_004:0017b01_2": "時光速相催荏苒。",
    "X65n1277_004:0017b02_3": "蹉跎一十九歲。",
    "X65n1277_004:0017b02_4": "因出四門遊。",
    "X65n1277_004:0017b02_5": "略觀浮世。",
    "X65n1277_004:0017b02_6": "西門逢死。",
    "X65n1277_004:0017b03_7": "北門僧托鉢持錫。",
    "X65n1277_004:0017b03_8": "聲聲教化隨緣布施。",
    "X65n1277_004:0017b03_9": "休痴休痴。",
    "X65n1277_004:0017b04_0": "莫戀奢華并富貴。",
    "X65n1277_004:0017b04_1": "早回頭思惟。",
    "X65n1277_004:0017b04_2": "太子聞言心中歡喜。",
    "X65n1277_004:0017b05_0": "迁時過逾城。",
    "X65n1277_004:0017b05_1": "雪山修持。",
    "X65n1277_004:0017b05_2": "朝餐麻麥日充飢。",
    "X65n1277_004:0017b05_3": "天王獻麋。",
    "X65n1277_004:0017b06_0": "鵲巢灌頂。",
    "X65n1277_004:0017b06_1": "蘆芽穿膝。",
    "X65n1277_004:0017b06_2": "苦持苦持。",
    "X65n1277_004:0017b06_3": "六年證得波羅蜜。",
    "X65n1277_004:0017b06_4": "巍巍相黃金體難比。",
    "X65n1277_004:0017b07_5": "雙林說法龍華會裏多寶寶如來。",
    "X65n1277_004:0017b08_0": "普賢慈氏辟支羅漢總歸依。",
    "X65n1277_004:0017b08_1": "目連舍利。",
    "X65n1277_004:0017b08_2": "我佛說法無涯邊際。",
    "X65n1277_004:0017b09_3": "經義經義。",
    "X65n1277_004:0017b09_4": "法華七卷經中髓。",
    "X65n1277_004:0017b09_5": "梁武懺消灾罪。",
    "X65n1277_004:0017b10_0": "人王孔雀上王彌勒持念保安康。",
    "X65n1277_004:0017b10_1": "名求福利國王由尚報天恩。",
    "X65n1277_004:0017b11_2": "請僧回施。",
    "X65n1277_004:0017b11_3": "(讚釋迦)又贊菩薩初因地緣起托質妙莊嚴王國裏。",
    "X65n1277_004:0017b13_4": "天龍生歡喜。",
    "X65n1277_004:0017b14_5": "公主降世皆由願力。",
    "X65n1277_004:0017b14_6": "大慈悲化身親至。",
    "X65n1277_004:0017b14_7": "青蓮瑩目紅桃映體。",
    "X65n1277_004:0017b15_8": "端嚴無比。",
    "X65n1277_004:0017b15_9": "不招駙馬為佳婿。",
    "X65n1277_004:0017b15_10": "心心願求出離出離。",
    "X65n1277_004:0017b16_11": "直往香山不戀榮貴。",
    "X65n1277_004:0017b16_12": "端坐自修行。",
    "X65n1277_004:0017b16_13": "皇宮拋棄回光證得波羅蜜。",
    "X65n1277_004:0017b17_14": "法身圓備尋聲救苦。",
    "X65n1277_004:0017b17_15": "以身布施希奇希奇。",
    "X65n1277_004:0017b18_16": "千手千眼神通力。",
    "X65n1277_004:0017b18_17": "阿僧祗曾修持修持。",
    "X65n1277_004:0017b18_18": "由昔觀音出現于世。",
    "X65n1277_004:0017b19_19": "此時教我修三摩提地。",
    "X65n1277_004:0017b19_20": "聞思從耳悟真宗。",
    "X65n1277_004:0017b20_21": "如來受記。",
    "X65n1277_004:0017b20_22": "金剛三昧普度一切。",
    "X65n1277_004:0017b20_23": "弘誓弘誓莊嚴聖相三十二。",
    "X65n1277_004:0017b21_24": "披素服垂珠翠姝麗。",
    "X65n1277_004:0017b21_25": "補陀山上琉璃苑裡。",
    "X65n1277_004:0017b22_26": "甘露現金瓶。",
    "X65n1277_004:0017b22_27": "灌洒楊枝。",
    "X65n1277_004:0017b22_28": "圓通常序楞嚴會。",
    "X65n1277_004:0017b22_29": "普施無畏。",
    "X65n1277_004:0017b23_30": "得度說法人天歸依。",
    "X65n1277_004:0017b23_31": "滅罪滅罪大悲神呪不思議。",
    "X65n1277_004:0017b24_0": "普門品陀羅尼妙義。",
    "X65n1277_004:0017b24_1": "接引眾生同證菩提。",
    "X65n1277_004:0017b24_2": "隨願盡圓成。",
    "X65n1277_004:0017c01_3": "我今頂禮一心專注告觀音。",
    "X65n1277_004:0017c01_4": "咸增福惠。",
    "X65n1277_004:0017c01_5": "(讚觀音)賀聖朝如來救度眾生苦。",
    "X65n1277_004:0017c03_6": "是四生慈父。",
    "X65n1277_004:0017c03_7": "含靈皆得離群迷。",
    "X65n1277_004:0017c03_8": "現化身千處。",
    "X65n1277_004:0017c04_9": "波旬外道生嗔怒。",
    "X65n1277_004:0017c04_10": "起惡心嫉妬。",
    "X65n1277_004:0017c04_11": "逼令請佛入涅槃。",
    "X65n1277_004:0017c05_12": "向雙林滅度。",
    "X65n1277_004:0017c06_0": "當時波利登雲路。",
    "X65n1277_004:0017c06_1": "往天宮報母。",
    "X65n1277_004:0017c06_2": "母言纔始夢中驚。",
    "X65n1277_004:0017c06_3": "憂眾生無主。",
    "X65n1277_004:0017c07_4": "爾時摩耶聞斯語。",
    "X65n1277_004:0017c07_5": "淚雙垂如雨。",
    "X65n1277_004:0017c07_6": "領諸從眾駕祥雲。",
    "X65n1277_004:0017c08_7": "至雙林親覩。",
    "X65n1277_004:0017c09_0": "遶棺三匝悲啼苦。",
    "X65n1277_004:0017c09_1": "言悉達我子。",
    "X65n1277_004:0017c09_2": "汝今捨我入涅槃。",
    "X65n1277_004:0017c09_3": "請師留四句。",
    "X65n1277_004:0017c10_4": "如來槨內談真語。",
    "X65n1277_004:0017c10_5": "免憂悲息苦。",
    "X65n1277_004:0017c10_6": "萬般世物盡無常。",
    "X65n1277_004:0017c11_7": "惟法身永固。",
    "X65n1277_004:0017c11_8": "(讚佛涅槃)滿庭芳稽首歸依補陀山上大聖名号觀音。",
    "X65n1277_004:0017c13_9": "常扶八難應群情。",
    "X65n1277_004:0017c14_10": "毫相分輝。",
    "X65n1277_004:0017c14_11": "百億楊枝洒苦海為霖。",
    "X65n1277_004:0017c14_12": "塵沙界勞生敬仰。",
    "X65n1277_004:0017c15_13": "一念免漂沈。",
    "X65n1277_004:0017c15_14": "巍巍蓮座上。",
    "X65n1277_004:0017c15_15": "華縵纓珞體瑩如銀。",
    "X65n1277_004:0017c15_16": "項佩珠絲網百寶嚴身。",
    "X65n1277_004:0017c16_17": "處處尋聲救苦。",
    "X65n1277_004:0017c16_18": "頭頭露接物。",
    "X65n1277_004:0017c16_19": "垂形真慈父。",
    "X65n1277_004:0017c17_20": "爐烟繚繞。",
    "X65n1277_004:0017c17_21": "遙望鑒誠心。",
    "X65n1277_004:0017c17_22": "(讚觀音)又我等虔誠一心歸命禮讚地藏能仁。",
    "X65n1277_004:0017c19_23": "悲心廣大遍乾坤。",
    "X65n1277_004:0017c20_24": "處處歸投。",
    "X65n1277_004:0017c20_25": "拔苦三途八難望垂恩。",
    "X65n1277_004:0017c20_26": "今宵夜群生瞻仰。",
    "X65n1277_004:0017c21_27": "竭意甚精勤。",
    "X65n1277_004:0017c21_28": "慈尊弘誓重。",
    "X65n1277_004:0017c21_29": "願放毫光照燭幽冥。",
    "X65n1277_004:0017c21_30": "化獄主赦囚罪苦休停。",
    "X65n1277_004:0017c22_31": "眾生冤愆解脫。",
    "X65n1277_004:0017c22_32": "從茲後不復哀鳴。",
    "X65n1277_004:0017c23_33": "仗佛力。",
    "X65n1277_004:0017c23_34": "有情含識俱獲盡超昇。",
    "X65n1277_004:0017c23_35": "(讚地藏)又三寶堪依。",
    "X65n1277_004:0018a01_36": "群生歸向。",
    "X65n1277_004:0018a01_37": "道場中布無遮。",
    "X65n1277_004:0018a01_38": "一聲鍾韻遍河沙。",
    "X65n1277_004:0018a02_39": "供主虔誠拜請。",
    "X65n1277_004:0018a02_40": "排淨供羅列幡花。",
    "X65n1277_004:0018a02_41": "焚香請天曹地水三界降雲車。",
    "X65n1277_004:0018a03_42": "人間宮廟眾龍神盡降。",
    "X65n1277_004:0018a03_43": "海岸天涯听如來秘密解脫曼拏。",
    "X65n1277_004:0018a04_44": "普救沈魂滯魄。",
    "X65n1277_004:0018a04_45": "离地獄往仙家。",
    "X65n1277_004:0018a05_0": "今之夜功圜果滿。",
    "X65n1277_004:0018a05_1": "稽首佛陀耶。",
    "X65n1277_004:0018a05_2": "(讚三界)水調歌嘆三界之師釋迦牟尼佛。",
    "X65n1277_004:0018a07_3": "乃喚阿難波利舍利弗迦葉犍連摩睺阿那律彌勒菩薩蔭光童子須菩提。",
    "X65n1277_004:0018a09_0": "敕汝等當知。",
    "X65n1277_004:0018a09_1": "速生毗耶城裏。",
    "X65n1277_004:0018a09_2": "今為維摩染患。",
    "X65n1277_004:0018a09_3": "為吾詢取平安起止還如是。",
    "X65n1277_004:0018a10_4": "爾時諸天菩薩欲去又遲疑。",
    "X65n1277_004:0018a11_0": "皆稽首含悲白佛言。",
    "X65n1277_004:0018a11_1": "因地今為維摩居士智惠廣愽無比。",
    "X65n1277_004:0018a12_2": "說法如流水。",
    "X65n1277_004:0018a12_3": "我今此上人者難詣去酧對。",
    "X65n1277_004:0018a13_0": "佛言知汝意。",
    "X65n1277_004:0018a13_1": "昔日曾遭值。",
    "X65n1277_004:0018a13_2": "乃喚文殊師利集諸天仙徒眾速往維摩所。",
    "X65n1277_004:0018a14_3": "爾時諸佛菩薩聲聞願參隨。",
    "X65n1277_004:0018a15_0": "文殊騎師子。",
    "X65n1277_004:0018a15_1": "現全威。",
    "X65n1277_004:0018a15_2": "香風散。",
    "X65n1277_004:0018a15_3": "殊異天花紛紛。",
    "X65n1277_004:0018a15_4": "長空法雨霏霏。",
    "X65n1277_004:0018a16_5": "直至維摩方丈。",
    "X65n1277_004:0018a16_6": "殷勤稽首瞻禮。",
    "X65n1277_004:0018a16_7": "願承佛慈旨來問居士染患因緣從何至。",
    "X65n1277_004:0018a18_0": "居士患身獨倚。",
    "X65n1277_004:0018a18_1": "謝子來申意。",
    "X65n1277_004:0018a18_2": "今為眾生染患。",
    "X65n1277_004:0018a18_3": "我今慜諸愚痴。",
    "X65n1277_004:0018a19_4": "以此慈悲故。",
    "X65n1277_004:0018a19_5": "如人家有子患。",
    "X65n1277_004:0018a19_6": "父母亦如是。",
    "X65n1277_004:0018a20_0": "諸菩薩不思議對答如流水。",
    "X65n1277_004:0018a20_1": "居士重携五偈演說法苦空門。",
    "X65n1277_004:0018a21_2": "門門談不異。",
    "X65n1277_004:0018a21_3": "視身如露如電如影化群迷。",
    "X65n1277_004:0018a22_0": "四眾等及修羅乾達婆王咸懽喜。",
    "X65n1277_004:0018a22_1": "讚歎能仁方便善會解。",
    "X65n1277_004:0018a23_2": "我由痴解說真如理。",
    "X65n1277_004:0018a23_3": "我今稽首瞻禮盡歸依。",
    "X65n1277_004:0018a23_4": "(讚維摩)降魔讚稽首牟尼大聖。",
    "X65n1277_004:0018b02_5": "下兜率。",
    "X65n1277_004:0018b02_6": "應三千。",
    "X65n1277_004:0018b02_7": "乘龍駕象夢透明天。",
    "X65n1277_004:0018b03_0": "藍園去。",
    "X65n1277_004:0018b03_1": "無憂樹。",
    "X65n1277_004:0018b03_2": "右脇降。",
    "X65n1277_004:0018b03_3": "綵雲連。",
    "X65n1277_004:0018b03_4": "九龍吐溫泉沐浴。",
    "X65n1277_004:0018b03_5": "奇異新鮮堪羨。",
    "X65n1277_004:0018b04_6": "步步紅蓮襯足。",
    "X65n1277_004:0018b04_7": "奏王知悅龍顏。",
    "X65n1277_004:0018b04_8": "長成因向四門遊翫。",
    "X65n1277_004:0018b05_9": "親覩見。",
    "X65n1277_004:0018b05_10": "老病死。",
    "X65n1277_004:0018b05_11": "悟浮生不長堅。",
    "X65n1277_004:0018b05_12": "復遇一福田。",
    "X65n1277_004:0018b06_13": "遂欲出離凡緣。",
    "X65n1277_004:0018b06_14": "朝天父王。",
    "X65n1277_004:0018b06_15": "忽爾聞言。",
    "X65n1277_004:0018b06_16": "更添絲竹聲喧。",
    "X65n1277_004:0018b07_17": "淨居空裏報語茫然。",
    "X65n1277_004:0018b07_18": "休貪戀五慾境。",
    "X65n1277_004:0018b07_19": "早修行學安禪。",
    "X65n1277_004:0018b08_20": "夜半跨朱騘踰城。",
    "X65n1277_004:0018b08_21": "雪嶺心堅六年。",
    "X65n1277_004:0018b08_22": "頂巢膝裏蘆芽。",
    "X65n1277_004:0018b09_23": "合掌不動安然。",
    "X65n1277_004:0018b09_24": "三十二相八十種好。",
    "X65n1277_004:0018b09_25": "金仙化千百億。",
    "X65n1277_004:0018b10_26": "正菩提演真詮。",
    "X65n1277_004:0018b10_27": "誓言度一切有情無量無邊。",
    "X65n1277_004:0018b11_0": "時有魔軍大怒。",
    "X65n1277_004:0018b11_1": "領妖兵戰金仙。",
    "X65n1277_004:0018b11_2": "持鎗振劒繚繞。",
    "X65n1277_004:0018b11_3": "飛烟狂顛。",
    "X65n1277_004:0018b12_4": "使千斤弩。",
    "X65n1277_004:0018b12_5": "告神將。",
    "X65n1277_004:0018b12_6": "敕親宣。",
    "X65n1277_004:0018b12_7": "號令具鋼鈎劒戟闊刃駢闐爭先。",
    "X65n1277_004:0018b13_8": "又放風砲亂打。",
    "X65n1277_004:0018b13_9": "喝殺聲振三千。",
    "X65n1277_004:0018b13_10": "吹沙走石呌噉連天。",
    "X65n1277_004:0018b14_11": "魔軍用千般。",
    "X65n1277_004:0018b14_12": "猛逞威獰嚇慈顏。",
    "X65n1277_004:0018b14_13": "雷電向虗空。",
    "X65n1277_004:0018b15_14": "晦瞑天地驚。",
    "X65n1277_004:0018b15_15": "然中天慈悲喜捨安然。",
    "X65n1277_004:0018b15_16": "萬德莊嚴無邊。",
    "X65n1277_004:0018b16_17": "凡舉鎗劒化作紅蓮。",
    "X65n1277_004:0018b16_18": "魔軍見如此神。",
    "X65n1277_004:0018b16_19": "却回心悔前愆。",
    "X65n1277_004:0018b17_20": "誓願信如來弟子。",
    "X65n1277_004:0018b17_21": "永向祗園佛前。",
    "X65n1277_004:0018b17_22": "一時稽首歸崇。",
    "X65n1277_004:0018b18_23": "受持戒行精專。",
    "X65n1277_004:0018b18_24": "世間愚痴望結良緣。",
    "X65n1277_004:0018b18_25": "普勸志心歸依世尊佛真正詮。",
    "X65n1277_004:0018b19_26": "上祝聖明君睿齡億萬斯年。",
    "X65n1277_004:0018b20_0": "望江南",
    "X65n1277_004:0018b21_0": "歸依佛。",
    "X65n1277_004:0018b21_1": "三界最為尊。",
    "X65n1277_004:0018b21_2": "累劫修行登正覺。",
    "X65n1277_004:0018b21_3": "常興法雨洒乾坤。",
    "X65n1277_004:0018b22_4": "無處不沾恩。",
    "X65n1277_004:0018b22_5": "千萬歲妙相度人倫。",
    "X65n1277_004:0018b22_6": "惟願慈悲垂保護。",
    "X65n1277_004:0018b23_7": "民安國泰布堯雲。",
    "X65n1277_004:0018b23_8": "佛日永長存。",
    "X65n1277_004:0018b24_0": "歸依法。",
    "X65n1277_004:0018b24_1": "王軸慣金文。",
    "X65n1277_004:0018b24_2": "貝葉開時光燦爛。",
    "X65n1277_004:0018b24_3": "琅函諷處起祥雲。",
    "X65n1277_004:0018c01_4": "釋梵眾龍神金口說。",
    "X65n1277_004:0018c01_5": "卷軸實難量。",
    "X65n1277_004:0018c01_6": "鎮在龍宮為世寶。",
    "X65n1277_004:0018c02_7": "福田皆度有緣人。",
    "X65n1277_004:0018c02_8": "長劫化迷津。",
    "X65n1277_004:0018c03_0": "歸依僧。",
    "X65n1277_004:0018c03_1": "真相貌稜層。",
    "X65n1277_004:0018c03_2": "身掛紫袍心似鏡。",
    "X65n1277_004:0018c03_3": "隨緣赴感應群情。",
    "X65n1277_004:0018c04_4": "如月照潭澄。",
    "X65n1277_004:0018c04_5": "常應供苦海救沈淪。",
    "X65n1277_004:0018c04_6": "我等志心投面禮。",
    "X65n1277_004:0018c05_7": "願逢彌勒下天庭。",
    "X65n1277_004:0018c05_8": "聞法悟無生。",
    "X65n1277_004:0018c06_0": "香花送諸佛坐寶蓮。",
    "X65n1277_004:0018c06_1": "仙樂空中來接引。",
    "X65n1277_004:0018c06_2": "鐃鈸鐘鼓響連天。",
    "X65n1277_004:0018c07_3": "隊仗擁金仙。",
    "X65n1277_004:0018c07_4": "菩薩聲聞眾。",
    "X65n1277_004:0018c07_5": "羅漢辟支僧。",
    "X65n1277_004:0018c07_6": "梵語唐言諸部讚。",
    "X65n1277_004:0018c08_7": "能與世間結良緣。",
    "X65n1277_004:0018c08_8": "佛法永流傳。",
    "X65n1277_004:0018c08_9": "(送□)道場眾合掌送金仙。",
    "X65n1277_004:0018c09_10": "惟願含靈沾利樂。",
    "X65n1277_004:0018c09_11": "今宵會上結良緣。",
    "X65n1277_004:0018c10_12": "世上悟真詮。",
    "X65n1277_004:0018c10_13": "道場諸聖眾。",
    "X65n1277_004:0018c10_14": "般若波羅蜜。",
    "X65n1277_004:0018c10_15": "摩訶般若波羅蜜。",
    "X65n1277_004:0018c11_16": "甚深般若波羅蜜。",
    "X65n1277_004:0018c11_17": "福利永無極。",
    "X65n1277_004:0018c11_18": "(送佛)聲聲慢通宵法會。",
    "X65n1277_004:0018c13_19": "蒙聖眾下降。",
    "X65n1277_004:0018c13_20": "凡情香花燈塗供養。",
    "X65n1277_004:0018c13_21": "甚有微輕。",
    "X65n1277_004:0018c14_22": "看看更殘月暗。",
    "X65n1277_004:0018c14_23": "漸金烏隱隱東生。",
    "X65n1277_004:0018c14_24": "陳讚禮。",
    "X65n1277_004:0018c14_25": "望我佛慈悲願鑒丹誠。",
    "X65n1277_004:0018c15_26": "三藏加持秘呪奏樂音漸送幽深。",
    "X65n1277_004:0018c15_27": "供主虔誠。",
    "X65n1277_004:0018c16_28": "顒望賜福留恩。",
    "X65n1277_004:0018c16_29": "檀那增添福壽。",
    "X65n1277_004:0018c16_30": "願三途永息。",
    "X65n1277_004:0018c17_0": "迷心悟智理。",
    "X65n1277_004:0018c17_1": "龍華三會願覩金身。",
    "X65n1277_004:0018c17_2": "(送佛)高峯龍泉院因師集賢語錄卷之四"
}