[
    {
        "source_sentence": "六字神呪經",
        "from": "T20n1180_001:0779b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺國三藏菩提流志奉　詔譯",
        "from": "T20n1180_001:0779b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵婆髻馱那上莫",
        "from": "T20n1180_001:0779b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此文殊師利六字呪功能我今欲說。",
        "from": "T20n1180_001:0779b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有持此呪欲成就者。",
        "from": "T20n1180_001:0779b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或食乳糜或食菜。",
        "from": "T20n1180_001:0779b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或食菓食乳。",
        "from": "T20n1180_001:0779b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應食此食日別三時洗浴。",
        "from": "T20n1180_001:0779b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂入五更以後為初時。",
        "from": "T20n1180_001:0779b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "午時已後是第二時。",
        "from": "T20n1180_001:0779b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃昏已後至初夜為第三時。",
        "from": "T20n1180_001:0779b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此三時各一度洗浴。",
        "from": "T20n1180_001:0779b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各別著一具淨衣。",
        "from": "T20n1180_001:0779b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故亦須三具淨衣。",
        "from": "T20n1180_001:0779b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪令滿六十萬遍。",
        "from": "T20n1180_001:0779b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此為最初承事供養文殊。",
        "from": "T20n1180_001:0779b21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若欲受持成就者。",
        "from": "T20n1180_001:0779b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須畫文殊師利像。",
        "from": "T20n1180_001:0779b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其畫像法。",
        "from": "T20n1180_001:0779b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取好白氈勿令有毛髮。",
        "from": "T20n1180_001:0779b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不得割斷纑縷。",
        "from": "T20n1180_001:0779b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彩色不得用膠。",
        "from": "T20n1180_001:0779b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以香汁和畫。",
        "from": "T20n1180_001:0779b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文殊師利像。",
        "from": "T20n1180_001:0779b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華座上結跏趺坐。",
        "from": "T20n1180_001:0779b25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作說法手。",
        "from": "T20n1180_001:0779b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手於懷中仰著。",
        "from": "T20n1180_001:0779b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像身作童子形。",
        "from": "T20n1180_001:0779b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黃金色。",
        "from": "T20n1180_001:0779b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天衣作白色遮臍已下。",
        "from": "T20n1180_001:0779b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘身皆露。",
        "from": "T20n1180_001:0779b27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首戴天冠身珮瓔珞臂印釧等。",
        "from": "T20n1180_001:0779b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾事莊嚴。",
        "from": "T20n1180_001:0779b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左廂畫觀世音像。",
        "from": "T20n1180_001:0779b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身白銀色。",
        "from": "T20n1180_001:0779b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞衣服莊嚴如常。",
        "from": "T20n1180_001:0779b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐蓮華上結跏趺坐。",
        "from": "T20n1180_001:0779c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手執白拂。",
        "from": "T20n1180_001:0779c01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右廂畫普賢菩薩像。",
        "from": "T20n1180_001:0779c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其身金色。",
        "from": "T20n1180_001:0779c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞莊嚴如常。",
        "from": "T20n1180_001:0779c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦坐蓮華座右手執白拂。",
        "from": "T20n1180_001:0779c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於文殊上空中兩邊。",
        "from": "T20n1180_001:0779c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各作一首陀會天。",
        "from": "T20n1180_001:0779c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手執華鬘。",
        "from": "T20n1180_001:0779c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在空雲內唯現半身。",
        "from": "T20n1180_001:0779c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手垂華鬘。",
        "from": "T20n1180_001:0779c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於文殊像下右邊。",
        "from": "T20n1180_001:0779c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫受持呪者。",
        "from": "T20n1180_001:0779c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地手執香爐。",
        "from": "T20n1180_001:0779c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其文殊師利等所坐華下遍畫作池水。",
        "from": "T20n1180_001:0779c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其菩薩像兩邊。",
        "from": "T20n1180_001:0779c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各畫在山峯。",
        "from": "T20n1180_001:0779c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其畫師從起首欲畫之時。",
        "from": "T20n1180_001:0779c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即日日受八戒。",
        "from": "T20n1180_001:0779c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洒浴著淨衣而畫。",
        "from": "T20n1180_001:0779c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至畫了。",
        "from": "T20n1180_001:0779c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有舍利塔即安文殊像。",
        "from": "T20n1180_001:0779c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在塔西面像面向西。",
        "from": "T20n1180_001:0779c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無大塔應以小塔安。",
        "from": "T20n1180_001:0779c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊像前以面向西。",
        "from": "T20n1180_001:0779c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設種種華種種飲食果子等。",
        "from": "T20n1180_001:0779c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三時供養。",
        "from": "T20n1180_001:0779c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道場內然酥燈。",
        "from": "T20n1180_001:0779c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其道場要須在寂靜處。",
        "from": "T20n1180_001:0779c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯令一人供給。",
        "from": "T20n1180_001:0779c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若正在道場誦呪時。",
        "from": "T20n1180_001:0779c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須華香等彈指而索不得出言。",
        "from": "T20n1180_001:0779c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取沈水香截為長二指。",
        "from": "T20n1180_001:0779c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都盧婆香油蘇合香稀者是無烟佉陀羅木炭。",
        "from": "T20n1180_001:0779c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無。",
        "from": "T20n1180_001:0779c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以紫橿木替。",
        "from": "T20n1180_001:0779c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以沈香內前油中。",
        "from": "T20n1180_001:0779c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於像前佉羅木炭火中燒盡一夜。",
        "from": "T20n1180_001:0779c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至明相出已。",
        "from": "T20n1180_001:0779c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見文殊師利。",
        "from": "T20n1180_001:0779c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有求願皆悉滿足。",
        "from": "T20n1180_001:0779c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除婬欲事。",
        "from": "T20n1180_001:0779c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自外悉皆不違所求。",
        "from": "T20n1180_001:0779c19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於像前。",
        "from": "T20n1180_001:0779c19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取旃檀截斷長二指還。",
        "from": "T20n1180_001:0779c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜燒供養。",
        "from": "T20n1180_001:0779c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時文殊師利即現身當為說法。",
        "from": "T20n1180_001:0779c21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有身患皆悉除愈。",
        "from": "T20n1180_001:0779c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得菩薩地自在。",
        "from": "T20n1180_001:0779c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於像前。",
        "from": "T20n1180_001:0779c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷塗地。",
        "from": "T20n1180_001:0779c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散眾名華。",
        "from": "T20n1180_001:0779c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者於塗地場內一邊坐。",
        "from": "T20n1180_001:0779c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦呪滿一百八遍。",
        "from": "T20n1180_001:0779c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經一月得聰明持一切經論。",
        "from": "T20n1180_001:0779c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法日日隨心常誦莫忘。",
        "from": "T20n1180_001:0779c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定受業報亦令消滅。",
        "from": "T20n1180_001:0779c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法若日別能誦滿一百八遍。",
        "from": "T20n1180_001:0779c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨命終時得見文殊師利。",
        "from": "T20n1180_001:0779c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心所願皆得受生。",
        "from": "T20n1180_001:0779c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利為利益眾生故。",
        "from": "T20n1180_001:0779c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸功能中略說少許。",
        "from": "T20n1180_001:0779c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六字神呪經宋藏此函更有六字神呪王經菩提流志譯者。",
        "from": "T20n1180_001:0780a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "丹藏則無。",
        "from": "T20n1180_001:0780a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "按開元錄才函中。",
        "from": "T20n1180_001:0780a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有六字神呪經菩提流志譯者。",
        "from": "T20n1180_001:0780a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云與陀羅尼集經第六卷文殊師利菩薩呪法及呪五首經六字陀羅尼等同本異譯。",
        "from": "T20n1180_001:0780a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撿之此經即是。",
        "from": "T20n1180_001:0780a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無六字神呪王經說呪十首菩提流志譯者。",
        "from": "T20n1180_001:0780a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今撿彼經。",
        "from": "T20n1180_001:0780a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是知函中失譯人名今付梁錄者耳。",
        "from": "T20n1180_001:0780a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋藏見彼題中有六字神呪之名。",
        "from": "T20n1180_001:0780a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂濫同焉重編於此才函之中。",
        "from": "T20n1180_001:0780a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是一錯也。",
        "from": "T20n1180_001:0780a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而又妄安流志之名何耶。",
        "from": "T20n1180_001:0780a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故今除之云。",
        "from": "T20n1180_001:0780a10_16",
        "context_with_next_sentence": true
    }
]