[
    {
        "source_sentence": "佛說時非時經",
        "from": "T17n0794a_001:0738b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天竺三藏若羅嚴譯",
        "from": "T17n0794a_001:0738b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞：一時，佛在王舍城鵲封竹園。是時，",
        "from": "T17n0794a_001:0738b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸比丘：",
        "from": "T17n0794a_001:0738b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我當為汝說：",
        "from": "T17n0794a_001:0738b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時與非時。",
        "from": "T17n0794a_001:0738b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善思念之！",
        "from": "T17n0794a_001:0738b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」諸比丘言：",
        "from": "T17n0794a_001:0738b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是。",
        "from": "T17n0794a_001:0738b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊！",
        "from": "T17n0794a_001:0738b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當受教聽。",
        "from": "T17n0794a_001:0738b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛告諸比丘：",
        "from": "T17n0794a_001:0738b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是中何者為時？",
        "from": "T17n0794a_001:0738b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者為非時？",
        "from": "T17n0794a_001:0738b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘當知：",
        "from": "T17n0794a_001:0738b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「冬分八月十六日至三十日七脚為時，五脚半非時。",
        "from": "T17n0794a_001:0738b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九月一日至十五日八脚為時，六脚八指為非時。",
        "from": "T17n0794a_001:0738b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九月十六日至三十日九脚為時，七脚六指為非時。",
        "from": "T17n0794a_001:0738b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十月一日至十五日十脚為時，八脚三指為非時。",
        "from": "T17n0794a_001:0738b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十月十六日至三十日十一脚為時，九脚三指為非時。",
        "from": "T17n0794a_001:0738b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一月一日至十五日十二脚為時，十脚六指為非時。",
        "from": "T17n0794a_001:0738b25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一月十六日至三十日十一脚半為時，十脚一指為非時。",
        "from": "T17n0794a_001:0738b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二月一日至十五日十一脚為時，九脚四指為非時。",
        "from": "T17n0794a_001:0738b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「春分十二月十六日至三十日十脚為時，八脚少一指為非時。",
        "from": "T17n0794a_001:0738b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正月一日至十五日九脚半為時，七脚少三指為非時。",
        "from": "T17n0794a_001:0738c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正月十六日至三十日九脚為時，六脚少三指為非時。",
        "from": "T17n0794a_001:0738c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二月一日至十五日八脚為時，五脚為非時。",
        "from": "T17n0794a_001:0738c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二月十六日至三十日七脚為時，四脚少三指為非時。",
        "from": "T17n0794a_001:0738c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三月一日至十五日六脚為時，三脚少四指為非時。",
        "from": "T17n0794a_001:0738c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三月十六日至三十日五脚為時，三脚少六指為非時。",
        "from": "T17n0794a_001:0738c07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四月一日至十五日四脚為時，二脚少一指為非時。",
        "from": "T17n0794a_001:0738c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「夏分四月十六日至三十日三脚為時，二脚少四指為非時。",
        "from": "T17n0794a_001:0738c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五月一日至十五日二脚為時，少三指為非時。",
        "from": "T17n0794a_001:0738c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五月十六日至三十日二脚半為時，一脚少為非時。",
        "from": "T17n0794a_001:0738c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六月一日至十五日四脚為時，二脚少二指為非時。",
        "from": "T17n0794a_001:0738c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六月十六日至三十日四脚半為時，二脚半為非時。",
        "from": "T17n0794a_001:0738c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七月一日至十五日五脚為時，三脚少為非時。",
        "from": "T17n0794a_001:0738c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七月十六日至三十日五脚半為時，三脚少為非時。",
        "from": "T17n0794a_001:0738c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八月一日至十五日六脚為時，四脚少為非時。",
        "from": "T17n0794a_001:0738c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八月十六日至三十日六脚半為時，四脚半少為非時。",
        "from": "T17n0794a_001:0738c19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是，諸比丘！",
        "from": "T17n0794a_001:0738c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我已說十二月時與非時。",
        "from": "T17n0794a_001:0738c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為諸聲聞之所應作，憐愍利益故說。",
        "from": "T17n0794a_001:0738c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所應作已竟，汝等當行。",
        "from": "T17n0794a_001:0738c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若樹下空處，露坐思惟。",
        "from": "T17n0794a_001:0738c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘！",
        "from": "T17n0794a_001:0738c22_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫為放逸，後為悔恨。",
        "from": "T17n0794a_001:0738c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是我所教誡。",
        "from": "T17n0794a_001:0738c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說經竟。",
        "from": "T17n0794a_001:0738c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時諸比丘皆大歡喜，勸助受持：",
        "from": "T17n0794a_001:0738c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「因緣輕慢故，　　命終墮惡道，",
        "from": "T17n0794a_001:0738c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣修善者，　　於此生天上，",
        "from": "T17n0794a_001:0738c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣斯修善業，　　離惡得解脫，",
        "from": "T17n0794a_001:0738c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不善觀因緣，　　身壞入惡道。",
        "from": "T17n0794a_001:0738c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」外國法師若羅嚴，手執胡本，口自宣譯。",
        "from": "T17n0794a_001:0738c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涼州道人，于填城中寫訖。",
        "from": "T17n0794a_001:0739a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被褐懷玉，深智作愚；",
        "from": "T17n0794a_001:0739a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "外如夷人，內懷明珠；",
        "from": "T17n0794a_001:0739a02_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "千億萬劫，與道同體。",
        "from": "T17n0794a_001:0739a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說時非時經",
        "from": "T17n0794a_001:0739a04_100",
        "context_with_next_sentence": false
    }
]