[
    {
        "source_sentence": "佛說壞相金剛陀羅尼經",
        "from": "T21n1417_001:0932a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光祿大夫大司徒三藏法師",
        "from": "T21n1417_001:0932a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙囉巴奉　詔譯",
        "from": "T21n1417_001:0932a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1417_001:0932a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時婆伽梵在金剛場。",
        "from": "T21n1417_001:0932a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來神力如持。",
        "from": "T21n1417_001:0932a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手身成金剛已。",
        "from": "T21n1417_001:0932a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即日入金剛三摩地。",
        "from": "T21n1417_001:0932a22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時金剛手。",
        "from": "T21n1417_001:0932a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承佛神力及一切如來諸菩薩等加持力故。",
        "from": "T21n1417_001:0932a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛忿怒說此最妙金剛心陀羅尼。",
        "from": "T21n1417_001:0932a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無斷無壞諦實堅固。",
        "from": "T21n1417_001:0932a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有能礙亦無怯退。",
        "from": "T21n1417_001:0932a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生皆令怕怖。",
        "from": "T21n1417_001:0932a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能與眾生摧伏煩惱。",
        "from": "T21n1417_001:0932a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷諸明呪鎮諸明呪。",
        "from": "T21n1417_001:0932a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及摧諸行能破他行。",
        "from": "T21n1417_001:0932a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧折諸魔解諸魔執。",
        "from": "T21n1417_001:0932a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "句攝一切諸部多眾。",
        "from": "T21n1417_001:0932a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復令一切諸修明呪。",
        "from": "T21n1417_001:0932a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未成就者令得成就。",
        "from": "T21n1417_001:0932a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既成就者不令唐捐。",
        "from": "T21n1417_001:0932a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有希願皆使如意。",
        "from": "T21n1417_001:0932a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能祐護一切眾生息災增益。",
        "from": "T21n1417_001:0932b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能禁止迷悶諸惡有情。",
        "from": "T21n1417_001:0932b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆是陀羅尼神呪之力。",
        "from": "T21n1417_001:0932b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手承佛神力即說呪曰。",
        "from": "T21n1417_001:0932b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪業咸清淨　　盡除一切苦",
        "from": "T21n1417_001:0933a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸經之根本　　莊嚴妙德相",
        "from": "T21n1417_001:0933a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有情諸損根　　命盡及夭橫",
        "from": "T21n1417_001:0933a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "值遇不豐饒　　并諸天棄背",
        "from": "T21n1417_001:0933a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親友返憎害　　觸惱婆羅門",
        "from": "T21n1417_001:0933a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撓害不和睦　　財乏并擾惱",
        "from": "T21n1417_001:0933a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憂慼苦逼迫　　逢難貧困苦",
        "from": "T21n1417_001:0933a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡星曜呪詛　　被諸魔侵害",
        "from": "T21n1417_001:0933a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由姙懷憂慼　　夢見不吉祥",
        "from": "T21n1417_001:0933a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沐浴皆清淨　　應聽最勝經",
        "from": "T21n1417_001:0933a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有淨善心　　著諸淨潔衣",
        "from": "T21n1417_001:0933a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依佛甚深行　　受持此經者",
        "from": "T21n1417_001:0933a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是威神力　　是彼諸有情",
        "from": "T21n1417_001:0933a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有病苦等　　悉令盡消滅",
        "from": "T21n1417_001:0933a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福壽皆增益　　遠離諸罪垢",
        "from": "T21n1417_001:0933a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠芥香蔓草　　無瑕寶栴檀",
        "from": "T21n1417_001:0933a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "玉金剛杵花　　閻淨水金瓶",
        "from": "T21n1417_001:0933a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以銀為瓶　　繫淨綵盈滿",
        "from": "T21n1417_001:0933a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數念二十一　　或滿百八遍",
        "from": "T21n1417_001:0933a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞相金剛呪　　國王常沐浴",
        "from": "T21n1417_001:0933a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說壞相金剛陀羅尼經",
        "from": "T21n1417_001:0933a23_100",
        "context_with_next_sentence": false
    }
]