[
    {
        "source_sentence": "佛說四天王經",
        "from": "T15n0590_001:0118a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宋涼州沙門智嚴共寶雲譯",
        "from": "T15n0590_001:0118a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是：一時佛在舍衛國祇樹給孤獨園。佛",
        "from": "T15n0590_001:0118a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告諸弟子：",
        "from": "T15n0590_001:0118a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「慎爾心念，無愛六欲；",
        "from": "T15n0590_001:0118a25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漱情去垢，無求為首；",
        "from": "T15n0590_001:0118a26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內以清淨，外當盡孝；",
        "from": "T15n0590_001:0118a26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以四等心奉養所生；",
        "from": "T15n0590_001:0118a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晨入尊廟，稽首悔過，朝稟暮誦，思經妙義；",
        "from": "T15n0590_001:0118a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛重戒治心穢病；",
        "from": "T15n0590_001:0118a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "齋肅靜處，數息禪定；",
        "from": "T15n0590_001:0118a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反流盡源，以求道真；",
        "from": "T15n0590_001:0118a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命猶電，恍惚即滅。",
        "from": "T15n0590_001:0118b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「齋日責心、慎身、守口，諸天齋日伺人善惡。",
        "from": "T15n0590_001:0118b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須彌山上即第二忉利天，天帝名因，福德巍巍，典主四天。",
        "from": "T15n0590_001:0118b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四天神王即因四鎮王也，各理一方，常以月八日遣使者下，案行天下，伺察帝王、臣民、龍鬼、蜎蜚、蚑行、蠕動之類心念、口言、身行善惡；",
        "from": "T15n0590_001:0118b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四日遣太子下；",
        "from": "T15n0590_001:0118b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五日四天王自下；",
        "from": "T15n0590_001:0118b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十三日使者復下；",
        "from": "T15n0590_001:0118b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十九日太子復下；",
        "from": "T15n0590_001:0118b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十日四王復自下。",
        "from": "T15n0590_001:0118b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「四王下者，日、月、五星、二十八宿，其中諸天僉然俱下。",
        "from": "T15n0590_001:0118b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四王命曰：",
        "from": "T15n0590_001:0118b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『勤伺眾生，施行吉凶。",
        "from": "T15n0590_001:0118b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於斯日歸佛、歸法、歸比丘僧；",
        "from": "T15n0590_001:0118b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清心守齋，布施貧乏；",
        "from": "T15n0590_001:0118b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒，忍辱，精進，禪定；",
        "from": "T15n0590_001:0118b12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翫經散說，開化盲冥；",
        "from": "T15n0590_001:0118b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "孝順二親，奉事三尊；",
        "from": "T15n0590_001:0118b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首受法，行四等心，慈育眾生者，具分別之以啟帝釋。",
        "from": "T15n0590_001:0118b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』若多修德，精進不怠，釋及輔臣三十三人，僉然俱喜。",
        "from": "T15n0590_001:0118b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「釋勅伺命，增壽益算；",
        "from": "T15n0590_001:0118b17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣諸善神，營護其身。",
        "from": "T15n0590_001:0118b17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨戒多少，若持一戒，令五神護之；",
        "from": "T15n0590_001:0118b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五戒具者，令二十五神營衛門戶，殃疫、眾邪、陰謀消滅，夜無惡夢；",
        "from": "T15n0590_001:0118b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縣官、盜賊、水火、災變終而不害；",
        "from": "T15n0590_001:0118b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禳禍滅怪。",
        "from": "T15n0590_001:0118b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯斯四等、五戒、六齋猶如大水而滅小火，豈有不滅者乎？",
        "from": "T15n0590_001:0118b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "臨其壽終，迎其魂神上生天上七寶宮殿，無願不得。",
        "from": "T15n0590_001:0118b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有不濟眾生之命、穢濁盜竊、婬犯他妻、兩舌惡罵、妄言綺語、厭禱呪詛、嫉妬恚癡、逆道不孝、違佛違法、謗比丘僧、善惡反論，有斯行者，四王以聞，帝釋及諸天僉然不悅，善神不復營護之，即令日月無光，星宿失度，風雨違時。",
        "from": "T15n0590_001:0118b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以現世人欲其改往修來，洗心齋肅；",
        "from": "T15n0590_001:0118c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首過三尊，四等養親；",
        "from": "T15n0590_001:0118c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忠于帝王，慈心諫諍；",
        "from": "T15n0590_001:0118c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡誠無欺，反前修來；",
        "from": "T15n0590_001:0118c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捐穢濁之操，就清淨之道。",
        "from": "T15n0590_001:0118c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若有改邪行就正真者，帝釋及四王靡不歡喜。",
        "from": "T15n0590_001:0118c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月即清明，星宿有常；",
        "from": "T15n0590_001:0118c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風雨順時，毒氣消歇；",
        "from": "T15n0590_001:0118c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天降甘露，地出澤泉；",
        "from": "T15n0590_001:0118c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水穀滋味，食之少病；",
        "from": "T15n0590_001:0118c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華色奕奕，壽命益長；",
        "from": "T15n0590_001:0118c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生不更牢獄，死得上生天上。",
        "from": "T15n0590_001:0118c07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德所願，自然飛行；",
        "from": "T15n0590_001:0118c07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存亡自在，項有日光；",
        "from": "T15n0590_001:0118c08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食自消化，無有便利之患；",
        "from": "T15n0590_001:0118c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身中香潔，口氣苾芬。",
        "from": "T15n0590_001:0118c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今日、月、星宿即諸天宮宅也！",
        "from": "T15n0590_001:0118c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶殿堂懸處虛空，在意所志。",
        "from": "T15n0590_001:0118c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽終下生侯王之家，顏容煒燁，見者心歡，逢佛值法、賢聖，相連力行，不與罪會，必得泥洹。",
        "from": "T15n0590_001:0118c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯皆五戒十善、撿情執欲、六齋使然！",
        "from": "T15n0590_001:0118c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「拘留秦佛時，人壽六萬歲，民性無為，護彼猶養己，平等無二。",
        "from": "T15n0590_001:0118c15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼佛去世，正教衰薄；",
        "from": "T15n0590_001:0118c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "民無正行，以漸為惡。",
        "from": "T15n0590_001:0118c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其壽日減，至于百歲。",
        "from": "T15n0590_001:0118c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾善逝後，民違佛教，無復孝子；",
        "from": "T15n0590_001:0118c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伺命減算，壽日有減。",
        "from": "T15n0590_001:0118c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天神不祐，凶疫、惡鬼日來侵害；",
        "from": "T15n0590_001:0118c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災怪首尾，願與意違，非禍縱橫。",
        "from": "T15n0590_001:0118c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生罹王法之囹圄，死入地獄、餓鬼、畜生。",
        "from": "T15n0590_001:0118c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出為人，必為下賤。",
        "from": "T15n0590_001:0118c20_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡追身，猶如五穀，隨其所種，獲其果實；",
        "from": "T15n0590_001:0118c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如夜書，火滅字存。",
        "from": "T15n0590_001:0118c22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身死名滅，殃福不朽。",
        "from": "T15n0590_001:0118c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慎護爾心、攝身、守口，五戒、十善可從得道。",
        "from": "T15n0590_001:0118c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾今得佛，積行所致！",
        "from": "T15n0590_001:0118c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」諸比丘聞經，皆大歡喜，稽首禮佛而去。",
        "from": "T15n0590_001:0118c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說四天王經",
        "from": "T15n0590_001:0118c26_100",
        "context_with_next_sentence": false
    }
]