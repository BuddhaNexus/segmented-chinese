{
    "T47n1994B_001:0646a26_0": "楊岐方會和尚後錄",
    "T47n1994B_001:0646a28_0": "師。",
    "T47n1994B_001:0646a28_1": "入院開堂。",
    "T47n1994B_001:0646a28_2": "宣疏了。",
    "T47n1994B_001:0646a28_3": "師云。",
    "T47n1994B_001:0646a28_4": "大眾。",
    "T47n1994B_001:0646a28_5": "大家散去。",
    "T47n1994B_001:0646a29_0": "早落二頭三首。",
    "T47n1994B_001:0646a29_1": "如不散去。",
    "T47n1994B_001:0646a29_2": "今日熱瞞諸人去也。",
    "T47n1994B_001:0646b01_3": "宜陽秀水。",
    "T47n1994B_001:0646b01_4": "萍實楚江。",
    "T47n1994B_001:0646b01_5": "遂陞座。",
    "T47n1994B_001:0646b01_6": "拈香云。",
    "T47n1994B_001:0646b01_7": "此一瓣香。",
    "T47n1994B_001:0646b02_8": "奉為今上皇帝。",
    "T47n1994B_001:0646b02_9": "聖壽千秋。",
    "T47n1994B_001:0646b02_10": "永昌佛日。",
    "T47n1994B_001:0646b03_0": "次一瓣香。",
    "T47n1994B_001:0646b03_1": "奉為州縣官僚。",
    "T47n1994B_001:0646b03_2": "檀那十信。",
    "T47n1994B_001:0646b03_3": "此一瓣香。",
    "T47n1994B_001:0646b04_4": "諸人還知落處麼。",
    "T47n1994B_001:0646b04_5": "若也知得落處。",
    "T47n1994B_001:0646b04_6": "更不須開兩片皮。",
    "T47n1994B_001:0646b05_7": "若也不知。",
    "T47n1994B_001:0646b05_8": "為先住南源。",
    "T47n1994B_001:0646b05_9": "次住石霜。",
    "T47n1994B_001:0646b06_0": "今住潭州興化禪寺。",
    "T47n1994B_001:0646b06_1": "諸人還識興化麼。",
    "T47n1994B_001:0646b06_2": "如不識。",
    "T47n1994B_001:0646b07_3": "不免帶累上祖。",
    "T47n1994B_001:0646b07_4": "遂趺座。",
    "T47n1994B_001:0646b07_5": "維那白槌訖。",
    "T47n1994B_001:0646b07_6": "師云。",
    "T47n1994B_001:0646b08_7": "早落第二義。",
    "T47n1994B_001:0646b08_8": "大眾散去。",
    "T47n1994B_001:0646b08_9": "猶較些子。",
    "T47n1994B_001:0646b08_10": "既不散去。",
    "T47n1994B_001:0646b09_11": "有疑請問。",
    "T47n1994B_001:0646b09_12": "僧問。",
    "T47n1994B_001:0646b09_13": "師唱誰家曲。",
    "T47n1994B_001:0646b09_14": "宗風嗣阿誰。",
    "T47n1994B_001:0646b10_15": "師云。",
    "T47n1994B_001:0646b10_16": "隔江打鼓不聞聲。",
    "T47n1994B_001:0646b10_17": "僧云。",
    "T47n1994B_001:0646b10_18": "興化的子。",
    "T47n1994B_001:0646b11_0": "臨濟兒孫。",
    "T47n1994B_001:0646b11_1": "師云。",
    "T47n1994B_001:0646b11_2": "今日因齋慶讚。",
    "T47n1994B_001:0646b11_3": "師乃云。",
    "T47n1994B_001:0646b11_4": "更有問話者麼。",
    "T47n1994B_001:0646b12_5": "所以道。",
    "T47n1994B_001:0646b12_6": "諸供養中。",
    "T47n1994B_001:0646b12_7": "法供養最為勝。",
    "T47n1994B_001:0646b13_0": "良久云。",
    "T47n1994B_001:0646b13_1": "百千諸佛。",
    "T47n1994B_001:0646b13_2": "天下老和尚出世。",
    "T47n1994B_001:0646b13_3": "皆以直指人心。",
    "T47n1994B_001:0646b14_4": "見性成佛。",
    "T47n1994B_001:0646b14_5": "若向者裏明得去。",
    "T47n1994B_001:0646b14_6": "盡與百千諸佛同參。",
    "T47n1994B_001:0646b15_7": "若向者裏。",
    "T47n1994B_001:0646b15_8": "未能明得。",
    "T47n1994B_001:0646b15_9": "楊岐未免惹帶口業。",
    "T47n1994B_001:0646b16_10": "況諸人盡是靈山會上。",
    "T47n1994B_001:0646b16_11": "受佛付囑底人。",
    "T47n1994B_001:0646b17_12": "何須自家退屈。",
    "T47n1994B_001:0646b17_13": "還有記得底人麼。",
    "T47n1994B_001:0646b17_14": "爾且道。",
    "T47n1994B_001:0646b18_15": "靈山末後一句。",
    "T47n1994B_001:0646b18_16": "作麼生道。",
    "T47n1994B_001:0646b18_17": "如無。",
    "T47n1994B_001:0646b18_18": "楊岐今日敗闕。",
    "T47n1994B_001:0646b19_19": "以方會。",
    "T47n1994B_001:0646b19_20": "俾欲深雲隱拙。",
    "T47n1994B_001:0646b19_21": "隨眾延時。",
    "T47n1994B_001:0646b19_22": "豈謂郡縣官僚。",
    "T47n1994B_001:0646b20_23": "洎諸檀信。",
    "T47n1994B_001:0646b20_24": "共崇三寶。",
    "T47n1994B_001:0646b20_25": "續佛壽命。",
    "T47n1994B_001:0646b20_26": "令法久住。",
    "T47n1994B_001:0646b21_27": "俾令山僧住持此剎。",
    "T47n1994B_001:0646b21_28": "亦非小緣。",
    "T47n1994B_001:0646b21_29": "所有一毫之善。",
    "T47n1994B_001:0646b22_30": "上祝皇帝萬歲。",
    "T47n1994B_001:0646b22_31": "家宰千秋。",
    "T47n1994B_001:0646b22_32": "大眾且道。",
    "T47n1994B_001:0646b23_33": "今日事作麼生。",
    "T47n1994B_001:0646b23_34": "良久云。",
    "T47n1994B_001:0646b23_35": "來年更有新條在。",
    "T47n1994B_001:0646b24_0": "惱亂春風卒未休。",
    "T47n1994B_001:0646b25_0": "上堂。",
    "T47n1994B_001:0646b25_1": "僧問。",
    "T47n1994B_001:0646b25_2": "如何是祖師西來意。",
    "T47n1994B_001:0646b25_3": "師云。",
    "T47n1994B_001:0646b25_4": "擔頭不負書。",
    "T47n1994B_001:0646b26_5": "師云。",
    "T47n1994B_001:0646b26_6": "心生種種法生。",
    "T47n1994B_001:0646b26_7": "心滅種種法滅。",
    "T47n1994B_001:0646b26_8": "拈起拄杖。",
    "T47n1994B_001:0646b27_9": "卓一下云。",
    "T47n1994B_001:0646b27_10": "大千世界百雜碎。",
    "T47n1994B_001:0646b27_11": "捧鉢盂向香積世界。",
    "T47n1994B_001:0646b28_12": "喫飰去也。",
    "T47n1994B_001:0646b29_0": "上堂。",
    "T47n1994B_001:0646b29_1": "僧問。",
    "T47n1994B_001:0646b29_2": "如何是不動尊。",
    "T47n1994B_001:0646b29_3": "師云。",
    "T47n1994B_001:0646b29_4": "大眾齊著力。",
    "T47n1994B_001:0646c01_5": "僧云。",
    "T47n1994B_001:0646c01_6": "與麼則香燈不絕去也。",
    "T47n1994B_001:0646c01_7": "師云。",
    "T47n1994B_001:0646c01_8": "且喜勿交涉師乃云。",
    "T47n1994B_001:0646c02_9": "一切法皆是佛法。",
    "T47n1994B_001:0646c02_10": "佛殿對三門。",
    "T47n1994B_001:0646c03_11": "僧堂對厨庫。",
    "T47n1994B_001:0646c03_12": "若也會得。",
    "T47n1994B_001:0646c03_13": "擔取鉢盂拄杖。",
    "T47n1994B_001:0646c03_14": "一任天下橫行。",
    "T47n1994B_001:0646c04_15": "若也不會。",
    "T47n1994B_001:0646c04_16": "更且面壁。",
    "T47n1994B_001:0646c05_0": "上堂。",
    "T47n1994B_001:0646c05_1": "僧問。",
    "T47n1994B_001:0646c05_2": "如何是佛。",
    "T47n1994B_001:0646c05_3": "師云。",
    "T47n1994B_001:0646c05_4": "賊是人做。",
    "T47n1994B_001:0646c05_5": "師乃云。",
    "T47n1994B_001:0646c06_6": "萬法是心光。",
    "T47n1994B_001:0646c06_7": "諸緣惟性曉。",
    "T47n1994B_001:0646c06_8": "本無迷悟人。",
    "T47n1994B_001:0646c06_9": "只要今日了。",
    "T47n1994B_001:0646c07_10": "山河大地。",
    "T47n1994B_001:0646c07_11": "有什麼過。",
    "T47n1994B_001:0646c07_12": "山河大地。",
    "T47n1994B_001:0646c07_13": "目前諸法。",
    "T47n1994B_001:0646c08_14": "總在諸人脚跟下。",
    "T47n1994B_001:0646c08_15": "自是諸人不信。",
    "T47n1994B_001:0646c08_16": "可謂古釋迦不前。",
    "T47n1994B_001:0646c09_17": "今彌勒不後。",
    "T47n1994B_001:0646c09_18": "楊岐與麼。",
    "T47n1994B_001:0646c09_19": "可謂買帽相頭。",
    "T47n1994B_001:0646c11_0": "上堂。",
    "T47n1994B_001:0646c11_1": "心是根。",
    "T47n1994B_001:0646c11_2": "法是塵。",
    "T47n1994B_001:0646c11_3": "兩種猶如鏡上痕。",
    "T47n1994B_001:0646c11_4": "痕垢盡時光始現。",
    "T47n1994B_001:0646c12_5": "心法雙忘性即真。",
    "T47n1994B_001:0646c12_6": "遂拍禪床一下云。",
    "T47n1994B_001:0646c13_7": "山河大地何處有也。",
    "T47n1994B_001:0646c13_8": "且作麼生道得不受人瞞底句。",
    "T47n1994B_001:0646c14_9": "若也道得。",
    "T47n1994B_001:0646c14_10": "向十字路頭。",
    "T47n1994B_001:0646c14_11": "道將一句來。",
    "T47n1994B_001:0646c15_12": "如無。",
    "T47n1994B_001:0646c15_13": "楊岐今日失利。",
    "T47n1994B_001:0646c16_0": "上堂。",
    "T47n1994B_001:0646c16_1": "一塵纔起。",
    "T47n1994B_001:0646c16_2": "大地全收。",
    "T47n1994B_001:0646c16_3": "遂拈起拄杖云。",
    "T47n1994B_001:0646c16_4": "須彌山上走馬。",
    "T47n1994B_001:0646c17_5": "大洋海裏[跳-兆+孛]跳。",
    "T47n1994B_001:0646c17_6": "鬧市中忽撞著者箇。",
    "T47n1994B_001:0646c18_7": "是人知有。",
    "T47n1994B_001:0646c18_8": "且道。",
    "T47n1994B_001:0646c18_9": "黑地裏穿針一句。",
    "T47n1994B_001:0646c18_10": "作麼生道。",
    "T47n1994B_001:0646c19_11": "良久云。",
    "T47n1994B_001:0646c19_12": "尋常不欲頻開口。",
    "T47n1994B_001:0646c19_13": "為是渾身著衲衣。",
    "T47n1994B_001:0646c21_0": "上堂。",
    "T47n1994B_001:0646c21_1": "云心隨萬境轉。",
    "T47n1994B_001:0646c21_2": "轉處實能幽。",
    "T47n1994B_001:0646c21_3": "隨流認得性。",
    "T47n1994B_001:0646c22_4": "無喜復無憂。",
    "T47n1994B_001:0646c22_5": "復云。",
    "T47n1994B_001:0646c22_6": "天堂地獄。",
    "T47n1994B_001:0646c22_7": "罩却汝頭。",
    "T47n1994B_001:0646c23_0": "釋迦老子。",
    "T47n1994B_001:0646c23_1": "在爾脚跟下。",
    "T47n1994B_001:0646c23_2": "當明對暗。",
    "T47n1994B_001:0646c23_3": "時人知有。",
    "T47n1994B_001:0646c24_0": "鬧市裏把將鼻孔來。",
    "T47n1994B_001:0646c24_1": "還有道得麼。",
    "T47n1994B_001:0646c24_2": "試出來。",
    "T47n1994B_001:0646c24_3": "與楊岐出氣。",
    "T47n1994B_001:0646c25_4": "如無。",
    "T47n1994B_001:0646c25_5": "楊岐今日失利。",
    "T47n1994B_001:0646c26_0": "上堂。",
    "T47n1994B_001:0646c26_1": "僧問。",
    "T47n1994B_001:0646c26_2": "祖師面壁。",
    "T47n1994B_001:0646c26_3": "意旨如何。",
    "T47n1994B_001:0646c26_4": "師云。",
    "T47n1994B_001:0646c26_5": "西天人不會唐言。",
    "T47n1994B_001:0646c27_6": "僧云。",
    "T47n1994B_001:0646c27_7": "昨日雨落。",
    "T47n1994B_001:0646c27_8": "今日天晴。",
    "T47n1994B_001:0646c27_9": "是人道得。",
    "T47n1994B_001:0646c28_10": "請和尚出格道一句。",
    "T47n1994B_001:0646c28_11": "師以兩手捺膝坐。",
    "T47n1994B_001:0646c29_0": "僧云。",
    "T47n1994B_001:0646c29_1": "大殺盡力道。",
    "T47n1994B_001:0646c29_2": "只道得一半。",
    "T47n1994B_001:0646c29_3": "師云。",
    "T47n1994B_001:0646c29_4": "分身兩處看。",
    "T47n1994B_001:0647a01_5": "僧指侍者云。",
    "T47n1994B_001:0647a01_6": "和尚為什麼不著鞋。",
    "T47n1994B_001:0647a01_7": "師云。",
    "T47n1994B_001:0647a02_0": "者漆桶。",
    "T47n1994B_001:0647a02_1": "僧便禮拜歸眾。",
    "T47n1994B_001:0647a03_0": "師。",
    "T47n1994B_001:0647a03_1": "乃舉外道問佛。",
    "T47n1994B_001:0647a03_2": "不問有言。",
    "T47n1994B_001:0647a03_3": "不問無言。",
    "T47n1994B_001:0647a03_4": "世尊良久。",
    "T47n1994B_001:0647a04_5": "外道讚嘆。",
    "T47n1994B_001:0647a04_6": "世尊大慈大悲。",
    "T47n1994B_001:0647a04_7": "開我迷雲。",
    "T47n1994B_001:0647a04_8": "令我得入。",
    "T47n1994B_001:0647a05_9": "外道去後。",
    "T47n1994B_001:0647a05_10": "阿難問世尊云。",
    "T47n1994B_001:0647a05_11": "外道見箇什麼。",
    "T47n1994B_001:0647a06_12": "便道令我得入。",
    "T47n1994B_001:0647a06_13": "世尊云。",
    "T47n1994B_001:0647a06_14": "如世良馬。",
    "T47n1994B_001:0647a06_15": "見鞭影而行。",
    "T47n1994B_001:0647a07_16": "師云。",
    "T47n1994B_001:0647a07_17": "道吾師兄云。",
    "T47n1994B_001:0647a07_18": "世尊隻眼通三世。",
    "T47n1994B_001:0647a08_19": "外道雙眸貫五天。",
    "T47n1994B_001:0647a08_20": "道吾師兄。",
    "T47n1994B_001:0647a08_21": "善則善矣。",
    "T47n1994B_001:0647a08_22": "甚與古人出氣。",
    "T47n1994B_001:0647a09_23": "楊岐道。",
    "T47n1994B_001:0647a09_24": "金鍮不辨。",
    "T47n1994B_001:0647a09_25": "玉石不分。",
    "T47n1994B_001:0647a09_26": "大眾要會麼。",
    "T47n1994B_001:0647a10_27": "世尊輟已從人。",
    "T47n1994B_001:0647a10_28": "外道因齋慶讚。",
    "T47n1994B_001:0647a10_29": "遂以拄杖卓一下。",
    "T47n1994B_001:0647a11_30": "喝一喝。",
    "T47n1994B_001:0647a12_0": "上堂。",
    "T47n1994B_001:0647a12_1": "妙湛總持不動尊。",
    "T47n1994B_001:0647a12_2": "首楞嚴王世希有。",
    "T47n1994B_001:0647a12_3": "銷我億劫顛倒想。",
    "T47n1994B_001:0647a13_4": "不歷僧祇獲法身。",
    "T47n1994B_001:0647a13_5": "乃拈拄杖云。",
    "T47n1994B_001:0647a14_6": "拄杖子。",
    "T47n1994B_001:0647a14_7": "豈不是法身。",
    "T47n1994B_001:0647a14_8": "爾諸人還知麼。",
    "T47n1994B_001:0647a14_9": "楊岐今日向水裏倒泥裏[馬*展]。",
    "T47n1994B_001:0647a15_10": "蓋為諸人頭抵麵袋裏。",
    "T47n1994B_001:0647a16_11": "三十年後。",
    "T47n1994B_001:0647a16_12": "明眼人前。",
    "T47n1994B_001:0647a16_13": "不得錯舉。",
    "T47n1994B_001:0647a16_14": "以拄杖卓一下。",
    "T47n1994B_001:0647a17_15": "喝一喝。",
    "T47n1994B_001:0647a18_0": "上堂。",
    "T47n1994B_001:0647a18_1": "云一切智通無障礙。",
    "T47n1994B_001:0647a18_2": "遂拈起拄杖云。",
    "T47n1994B_001:0647a18_3": "拄杖子。",
    "T47n1994B_001:0647a19_4": "向諸人面前。",
    "T47n1994B_001:0647a19_5": "逞大神通去也。",
    "T47n1994B_001:0647a19_6": "遂擲下云。",
    "T47n1994B_001:0647a20_0": "直得乾坤震裂。",
    "T47n1994B_001:0647a20_1": "地搖六動。",
    "T47n1994B_001:0647a20_2": "不見道。",
    "T47n1994B_001:0647a20_3": "一切智智清淨。",
    "T47n1994B_001:0647a21_4": "又拍禪床一下云。",
    "T47n1994B_001:0647a21_5": "三十年後。",
    "T47n1994B_001:0647a21_6": "明眼人前。",
    "T47n1994B_001:0647a22_0": "莫道楊岐龍頭蛇尾。",
    "T47n1994B_001:0647a23_0": "上堂。",
    "T47n1994B_001:0647a23_1": "云雷驚雨勢。",
    "T47n1994B_001:0647a23_2": "萬物發生。",
    "T47n1994B_001:0647a23_3": "拈起拄杖云。",
    "T47n1994B_001:0647a23_4": "大眾且道。",
    "T47n1994B_001:0647a24_5": "者箇作麼生。",
    "T47n1994B_001:0647a24_6": "良久云。",
    "T47n1994B_001:0647a24_7": "漁翁盡日空垂釣。",
    "T47n1994B_001:0647a25_8": "收取絲綸歸去來。",
    "T47n1994B_001:0647a25_9": "以拄杖卓禪床一下云。",
    "T47n1994B_001:0647a26_0": "參。",
    "T47n1994B_001:0647a27_0": "上堂。",
    "T47n1994B_001:0647a27_1": "僧問。",
    "T47n1994B_001:0647a27_2": "師登寶座。",
    "T47n1994B_001:0647a27_3": "四眾臨筵。",
    "T47n1994B_001:0647a27_4": "的的西來。",
    "T47n1994B_001:0647a28_0": "請師舉唱。",
    "T47n1994B_001:0647a28_1": "師云。",
    "T47n1994B_001:0647a28_2": "雲開山嶽秀。",
    "T47n1994B_001:0647a28_3": "水到四溟寬。",
    "T47n1994B_001:0647a28_4": "進云。",
    "T47n1994B_001:0647a29_5": "一句已蒙師指示。",
    "T47n1994B_001:0647a29_6": "今日得聞於未聞。",
    "T47n1994B_001:0647a29_7": "師云。",
    "T47n1994B_001:0647b01_0": "脚跟下一句。",
    "T47n1994B_001:0647b01_1": "作麼生道。",
    "T47n1994B_001:0647b01_2": "僧云。",
    "T47n1994B_001:0647b01_3": "若不伸三拜。",
    "T47n1994B_001:0647b01_4": "爭顯我師機。",
    "T47n1994B_001:0647b02_5": "師云。",
    "T47n1994B_001:0647b02_6": "更有什麼事。",
    "T47n1994B_001:0647b02_7": "僧禮拜。",
    "T47n1994B_001:0647b02_8": "師云。",
    "T47n1994B_001:0647b03_0": "記取者僧話頭。",
    "T47n1994B_001:0647b03_1": "問。",
    "T47n1994B_001:0647b03_2": "先聖有八萬四千法門。",
    "T47n1994B_001:0647b03_3": "門門見諦。",
    "T47n1994B_001:0647b04_4": "學人為什麼。",
    "T47n1994B_001:0647b04_5": "觸途成滯。",
    "T47n1994B_001:0647b04_6": "師云。",
    "T47n1994B_001:0647b04_7": "何得自家退屈。",
    "T47n1994B_001:0647b05_8": "僧云。",
    "T47n1994B_001:0647b05_9": "急切處。",
    "T47n1994B_001:0647b05_10": "請師舉。",
    "T47n1994B_001:0647b05_11": "師云。",
    "T47n1994B_001:0647b05_12": "露柱[跳-兆+孛]跳。",
    "T47n1994B_001:0647b06_13": "上三十三天。",
    "T47n1994B_001:0647b06_14": "僧云。",
    "T47n1994B_001:0647b06_15": "拈却佛殿。",
    "T47n1994B_001:0647b06_16": "去却案山。",
    "T47n1994B_001:0647b07_0": "脚跟下。",
    "T47n1994B_001:0647b07_1": "去西天有多少。",
    "T47n1994B_001:0647b07_2": "師云。",
    "T47n1994B_001:0647b07_3": "楊岐被爾問倒。",
    "T47n1994B_001:0647b08_4": "僧云。",
    "T47n1994B_001:0647b08_5": "將謂無鼻孔。",
    "T47n1994B_001:0647b08_6": "師云。",
    "T47n1994B_001:0647b08_7": "三十年後。",
    "T47n1994B_001:0647b08_8": "自家面赤。",
    "T47n1994B_001:0647b09_9": "師乃云。",
    "T47n1994B_001:0647b09_10": "風不鳴條。",
    "T47n1994B_001:0647b09_11": "雨不破塊。",
    "T47n1994B_001:0647b09_12": "此是俗漢時節。",
    "T47n1994B_001:0647b10_13": "作麼生是衲僧應時應節底句。",
    "T47n1994B_001:0647b10_14": "遂拍禪床一下云。",
    "T47n1994B_001:0647b11_15": "直待彌勒下生時。",
    "T47n1994B_001:0647b12_0": "上堂。",
    "T47n1994B_001:0647b12_1": "僧問。",
    "T47n1994B_001:0647b12_2": "虎符金印師親握。",
    "T47n1994B_001:0647b12_3": "家國興亡事若何。",
    "T47n1994B_001:0647b13_4": "師云。",
    "T47n1994B_001:0647b13_5": "將軍不舉令。",
    "T47n1994B_001:0647b13_6": "僧云。",
    "T47n1994B_001:0647b13_7": "坐籌幃幄。",
    "T47n1994B_001:0647b13_8": "非師者誰。",
    "T47n1994B_001:0647b14_9": "師云。",
    "T47n1994B_001:0647b14_10": "金州客。",
    "T47n1994B_001:0647b14_11": "僧云。",
    "T47n1994B_001:0647b14_12": "幸對人天。",
    "T47n1994B_001:0647b14_13": "願觀盛作。",
    "T47n1994B_001:0647b15_14": "師云。",
    "T47n1994B_001:0647b15_15": "楊岐鼻孔。",
    "T47n1994B_001:0647b15_16": "在闍梨手裏。",
    "T47n1994B_001:0647b15_17": "僧云。",
    "T47n1994B_001:0647b15_18": "學人性命。",
    "T47n1994B_001:0647b16_19": "在和尚手中。",
    "T47n1994B_001:0647b16_20": "師云。",
    "T47n1994B_001:0647b16_21": "爾乾[跳-兆+孛]跳作什麼。",
    "T47n1994B_001:0647b16_22": "僧云。",
    "T47n1994B_001:0647b17_23": "下坡不走。",
    "T47n1994B_001:0647b17_24": "快便難逢。",
    "T47n1994B_001:0647b17_25": "撫掌一下。",
    "T47n1994B_001:0647b17_26": "便禮拜。",
    "T47n1994B_001:0647b18_0": "師云。",
    "T47n1994B_001:0647b18_1": "看者一員戰將。",
    "T47n1994B_001:0647b18_2": "師乃云。",
    "T47n1994B_001:0647b18_3": "風霜刮地。",
    "T47n1994B_001:0647b18_4": "寒葉飄空。",
    "T47n1994B_001:0647b19_5": "不涉春緣。",
    "T47n1994B_001:0647b19_6": "拈將鼻吼來。",
    "T47n1994B_001:0647b19_7": "遂拍禪床一下云。",
    "T47n1994B_001:0647b20_8": "來年更有新條在。",
    "T47n1994B_001:0647b20_9": "惱亂春風卒未休。",
    "T47n1994B_001:0647b21_0": "上堂。",
    "T47n1994B_001:0647b21_1": "云楊岐一訣。",
    "T47n1994B_001:0647b21_2": "凡聖路絕。",
    "T47n1994B_001:0647b21_3": "無端維摩。",
    "T47n1994B_001:0647b21_4": "特地饒舌。",
    "T47n1994B_001:0647b23_0": "上堂。",
    "T47n1994B_001:0647b23_1": "供養主問。",
    "T47n1994B_001:0647b23_2": "雪路漫漫。",
    "T47n1994B_001:0647b23_3": "如何化導。",
    "T47n1994B_001:0647b23_4": "師云。",
    "T47n1994B_001:0647b24_0": "霧鎖千山秀。",
    "T47n1994B_001:0647b24_1": "迤邐問行人。",
    "T47n1994B_001:0647b24_2": "僧問。",
    "T47n1994B_001:0647b24_3": "忽有人問楊岐意旨。",
    "T47n1994B_001:0647b25_4": "未審如何舉似。",
    "T47n1994B_001:0647b25_5": "師云。",
    "T47n1994B_001:0647b25_6": "大野分春色。",
    "T47n1994B_001:0647b25_7": "巖前凍未消。",
    "T47n1994B_001:0647b26_8": "僧畫一圓相云。",
    "T47n1994B_001:0647b26_9": "忽遇與麼人來。",
    "T47n1994B_001:0647b26_10": "又作麼生。",
    "T47n1994B_001:0647b27_11": "師乃捩轉面。",
    "T47n1994B_001:0647b27_12": "僧擬議。",
    "T47n1994B_001:0647b27_13": "師便喝云。",
    "T47n1994B_001:0647b27_14": "甚麼處去也。",
    "T47n1994B_001:0647b28_15": "僧作女人拜。",
    "T47n1994B_001:0647b28_16": "師云。",
    "T47n1994B_001:0647b28_17": "歸來與爾三十棒。",
    "T47n1994B_001:0647b29_0": "師乃云。",
    "T47n1994B_001:0647b29_1": "楊岐令下。",
    "T47n1994B_001:0647b29_2": "已在言前。",
    "T47n1994B_001:0647b29_3": "作麼生是正令。",
    "T47n1994B_001:0647c01_0": "喝一喝。",
    "T47n1994B_001:0647c01_1": "便下座。",
    "T47n1994B_001:0647c02_0": "上堂。",
    "T47n1994B_001:0647c02_1": "云落鵰之箭。",
    "T47n1994B_001:0647c02_2": "斬蛟之劍。",
    "T47n1994B_001:0647c02_3": "主將自敗。",
    "T47n1994B_001:0647c02_4": "抱馬拕旗。",
    "T47n1994B_001:0647c03_5": "有人向安家立國處。",
    "T47n1994B_001:0647c03_6": "道將一句來。",
    "T47n1994B_001:0647c03_7": "良久云。",
    "T47n1994B_001:0647c04_8": "太平本是將軍致。",
    "T47n1994B_001:0647c04_9": "不許將軍見太平。",
    "T47n1994B_001:0647c04_10": "喝一喝。",
    "T47n1994B_001:0647c06_0": "上堂。",
    "T47n1994B_001:0647c06_1": "俗士問。",
    "T47n1994B_001:0647c06_2": "人王與法王相見。",
    "T47n1994B_001:0647c06_3": "合談何事。",
    "T47n1994B_001:0647c06_4": "師云。",
    "T47n1994B_001:0647c07_5": "釣魚船上謝三郎。",
    "T47n1994B_001:0647c07_6": "進云。",
    "T47n1994B_001:0647c07_7": "此事已蒙師指示。",
    "T47n1994B_001:0647c08_0": "雲蓋家風事若何。",
    "T47n1994B_001:0647c08_1": "師云。",
    "T47n1994B_001:0647c08_2": "幞頭衫帽脫當酒錢。",
    "T47n1994B_001:0647c09_0": "士云。",
    "T47n1994B_001:0647c09_1": "忽遇客來。",
    "T47n1994B_001:0647c09_2": "如何祗待。",
    "T47n1994B_001:0647c09_3": "師云。",
    "T47n1994B_001:0647c09_4": "三盞兩盞猶閑事。",
    "T47n1994B_001:0647c10_5": "醉後郎當笑殺人。",
    "T47n1994B_001:0647c10_6": "師乃云。",
    "T47n1994B_001:0647c10_7": "一切法皆是佛法。",
    "T47n1994B_001:0647c11_8": "遂拍禪床一下云。",
    "T47n1994B_001:0647c11_9": "山河大地百雜碎。",
    "T47n1994B_001:0647c11_10": "還我佛法來。",
    "T47n1994B_001:0647c12_11": "良久云。",
    "T47n1994B_001:0647c12_12": "何似生遼天鶻。",
    "T47n1994B_001:0647c12_13": "萬里雲只一突。",
    "T47n1994B_001:0647c14_0": "上堂拍禪床云。",
    "T47n1994B_001:0647c14_1": "大眾。",
    "T47n1994B_001:0647c14_2": "釣竿斫盡重栽竹。",
    "T47n1994B_001:0647c14_3": "不計功程得便休。",
    "T47n1994B_001:0647c16_0": "上堂。",
    "T47n1994B_001:0647c16_1": "云無邊剎境。",
    "T47n1994B_001:0647c16_2": "自他不隔於毫端。",
    "T47n1994B_001:0647c16_3": "十世古今。",
    "T47n1994B_001:0647c17_4": "始終不離於當念。",
    "T47n1994B_001:0647c17_5": "遂拍禪床一下云。",
    "T47n1994B_001:0647c17_6": "釋迦老子年多少。",
    "T47n1994B_001:0647c18_7": "還知麼。",
    "T47n1994B_001:0647c18_8": "若也知得。",
    "T47n1994B_001:0647c18_9": "人間天上。",
    "T47n1994B_001:0647c18_10": "出入自由。",
    "T47n1994B_001:0647c19_11": "若也不知。",
    "T47n1994B_001:0647c19_12": "雲蓋自道。",
    "T47n1994B_001:0647c19_13": "恒薩訶竭二千年。",
    "T47n1994B_001:0647c21_0": "上堂。",
    "T47n1994B_001:0647c21_1": "云把定乾坤幾萬般。",
    "T47n1994B_001:0647c21_2": "文殊普賢豈能觀。",
    "T47n1994B_001:0647c22_0": "今日為君重注破。",
    "T47n1994B_001:0647c22_1": "鼈鼻南山子細看。",
    "T47n1994B_001:0647c22_2": "以拄杖卓一下。",
    "T47n1994B_001:0647c24_0": "上堂。",
    "T47n1994B_001:0647c24_1": "云一即一切。",
    "T47n1994B_001:0647c24_2": "一切即一。",
    "T47n1994B_001:0647c24_3": "拈起拄杖云。",
    "T47n1994B_001:0647c24_4": "吞却山河大地了也。",
    "T47n1994B_001:0647c25_5": "過去諸佛。",
    "T47n1994B_001:0647c25_6": "未來諸佛。",
    "T47n1994B_001:0647c25_7": "天下老和尚。",
    "T47n1994B_001:0647c26_8": "總在拄杖頭上。",
    "T47n1994B_001:0647c26_9": "遂以拄杖劃一劃云。",
    "T47n1994B_001:0647c27_0": "不消一喝。",
    "T47n1994B_001:0647c28_0": "上堂。",
    "T47n1994B_001:0647c28_1": "云雲蓋傳箭令下。",
    "T47n1994B_001:0647c28_2": "釋迦老子為先鋒。",
    "T47n1994B_001:0647c28_3": "菩提達磨為殿後。",
    "T47n1994B_001:0647c29_4": "陣勢既圓。",
    "T47n1994B_001:0647c29_5": "天下太平。",
    "T47n1994B_001:0647c29_6": "且道。",
    "T47n1994B_001:0647c29_7": "不動步一句。",
    "T47n1994B_001:0648a01_8": "作麼生道。",
    "T47n1994B_001:0648a01_9": "良久云。",
    "T47n1994B_001:0648a01_10": "不經一事。",
    "T47n1994B_001:0648a01_11": "不長一智。",
    "T47n1994B_001:0648a02_12": "參。",
    "T47n1994B_001:0648a03_0": "上堂。",
    "T47n1994B_001:0648a03_1": "云天得一以清。",
    "T47n1994B_001:0648a03_2": "地得一以寧。",
    "T47n1994B_001:0648a03_3": "君王得一。",
    "T47n1994B_001:0648a04_0": "以治天下。",
    "T47n1994B_001:0648a04_1": "衲僧得一。",
    "T47n1994B_001:0648a04_2": "且作麼生。",
    "T47n1994B_001:0648a04_3": "良久云。",
    "T47n1994B_001:0648a04_4": "鉢盂口向天。",
    "T47n1994B_001:0648a06_0": "上堂。",
    "T47n1994B_001:0648a06_1": "云心隨萬境轉。",
    "T47n1994B_001:0648a06_2": "轉處實能幽。",
    "T47n1994B_001:0648a06_3": "拍禪床一下云。",
    "T47n1994B_001:0648a07_4": "釋迦老子。",
    "T47n1994B_001:0648a07_5": "被蟭螟虫吞却了也。",
    "T47n1994B_001:0648a07_6": "且喜天下太平。",
    "T47n1994B_001:0648a08_7": "喝一喝上堂。",
    "T47n1994B_001:0648a08_8": "云時雨霖霖。",
    "T47n1994B_001:0648a08_9": "悅耕人心頭頭顯煥。",
    "T47n1994B_001:0648a09_10": "金不博金。",
    "T47n1994B_001:0648a09_11": "參。",
    "T47n1994B_001:0648a10_0": "上堂。",
    "T47n1994B_001:0648a10_1": "云是法住法位。",
    "T47n1994B_001:0648a10_2": "世間相常住。",
    "T47n1994B_001:0648a10_3": "釋迦老子。",
    "T47n1994B_001:0648a11_0": "鼻孔遼天。",
    "T47n1994B_001:0648a11_1": "樓至如來。",
    "T47n1994B_001:0648a11_2": "兩脚踏地。",
    "T47n1994B_001:0648a11_3": "爾且道。",
    "T47n1994B_001:0648a11_4": "者兩箇漢。",
    "T47n1994B_001:0648a12_5": "還有過也無。",
    "T47n1994B_001:0648a12_6": "良久云。",
    "T47n1994B_001:0648a12_7": "犬子便吠。",
    "T47n1994B_001:0648a12_8": "牛子牽犁。",
    "T47n1994B_001:0648a13_9": "衲僧與麼未摸著皮。",
    "T47n1994B_001:0648a14_0": "上堂。",
    "T47n1994B_001:0648a14_1": "顧視大眾。",
    "T47n1994B_001:0648a14_2": "喝一喝。",
    "T47n1994B_001:0648a14_3": "卓拄杖一下云。",
    "T47n1994B_001:0648a14_4": "清平世界。",
    "T47n1994B_001:0648a15_5": "不許人攙奪行市。",
    "T47n1994B_001:0648a16_0": "上堂。",
    "T47n1994B_001:0648a16_1": "云釋迦老子初生時。",
    "T47n1994B_001:0648a16_2": "周行七步。",
    "T47n1994B_001:0648a16_3": "目顧四方。",
    "T47n1994B_001:0648a17_4": "一手指天。",
    "T47n1994B_001:0648a17_5": "一手指地。",
    "T47n1994B_001:0648a17_6": "今時衲僧。",
    "T47n1994B_001:0648a17_7": "盡皆打模畫樣。",
    "T47n1994B_001:0648a18_8": "便道。",
    "T47n1994B_001:0648a18_9": "天上天下。",
    "T47n1994B_001:0648a18_10": "唯我獨尊。",
    "T47n1994B_001:0648a18_11": "雲蓋不惜性命。",
    "T47n1994B_001:0648a19_12": "亦為諸人打箇樣子。",
    "T47n1994B_001:0648a19_13": "良久云。",
    "T47n1994B_001:0648a19_14": "陽氣發時無硬地。",
    "T47n1994B_001:0648a21_0": "上堂。",
    "T47n1994B_001:0648a21_1": "云彌勒真彌勒。",
    "T47n1994B_001:0648a21_2": "分身千百億。",
    "T47n1994B_001:0648a21_3": "時時示時人。",
    "T47n1994B_001:0648a22_4": "時人皆不識。",
    "T47n1994B_001:0648a22_5": "師乃擲下拄杖。",
    "T47n1994B_001:0648a22_6": "便歸方丈。",
    "T47n1994B_001:0648a23_0": "上堂。",
    "T47n1994B_001:0648a23_1": "舉盤山道。",
    "T47n1994B_001:0648a23_2": "向上一路。",
    "T47n1994B_001:0648a23_3": "千聖不傳。",
    "T47n1994B_001:0648a23_4": "師云。",
    "T47n1994B_001:0648a24_0": "口上著。",
    "T47n1994B_001:0648a24_1": "又云。",
    "T47n1994B_001:0648a24_2": "學者勞形。",
    "T47n1994B_001:0648a24_3": "如猿捉影。",
    "T47n1994B_001:0648a24_4": "師云。",
    "T47n1994B_001:0648a24_5": "盤山與麼道。",
    "T47n1994B_001:0648a25_6": "以已妨人。",
    "T47n1994B_001:0648a26_0": "上堂。",
    "T47n1994B_001:0648a26_1": "彌勒真彌勒。",
    "T47n1994B_001:0648a26_2": "分身千百億。",
    "T47n1994B_001:0648a26_3": "時時示時人。",
    "T47n1994B_001:0648a27_4": "時人皆不識。",
    "T47n1994B_001:0648a27_5": "師遂拈起拄杖云。",
    "T47n1994B_001:0648a27_6": "拄杖子。",
    "T47n1994B_001:0648a27_7": "豈不是彌勒。",
    "T47n1994B_001:0648a28_8": "諸人還見麼。",
    "T47n1994B_001:0648a28_9": "拄杖子橫也。",
    "T47n1994B_001:0648a28_10": "是彌勒放光動地。",
    "T47n1994B_001:0648a29_11": "拄杖子竪也。",
    "T47n1994B_001:0648a29_12": "是彌勒放光照曜三十三天。",
    "T47n1994B_001:0648b01_13": "拄杖子不橫不竪。",
    "T47n1994B_001:0648b01_14": "彌勒向諸人脚跟下。",
    "T47n1994B_001:0648b02_15": "助爾諸人說般若。",
    "T47n1994B_001:0648b02_16": "若也知得。",
    "T47n1994B_001:0648b02_17": "去拈鼻孔。",
    "T47n1994B_001:0648b02_18": "向鉢盂裏。",
    "T47n1994B_001:0648b03_19": "道將一句來。",
    "T47n1994B_001:0648b03_20": "如無。",
    "T47n1994B_001:0648b03_21": "山僧失利。",
    "T47n1994B_001:0648b04_0": "上堂。",
    "T47n1994B_001:0648b04_1": "云山僧一語。",
    "T47n1994B_001:0648b04_2": "凡聖同舉。",
    "T47n1994B_001:0648b04_3": "罷釣收綸。",
    "T47n1994B_001:0648b04_4": "不如歸去。",
    "T47n1994B_001:0648b06_0": "上堂。",
    "T47n1994B_001:0648b06_1": "云今朝三月二。",
    "T47n1994B_001:0648b06_2": "瞿曇未瞥地。",
    "T47n1994B_001:0648b06_3": "拈花說多端。",
    "T47n1994B_001:0648b07_4": "迦葉猶尚醉。",
    "T47n1994B_001:0648b07_5": "更有末後語。",
    "T47n1994B_001:0648b07_6": "且不得錯舉。",
    "T47n1994B_001:0648b08_0": "上堂。",
    "T47n1994B_001:0648b08_1": "云朝晴夜雨。",
    "T47n1994B_001:0648b08_2": "民歡卒土。",
    "T47n1994B_001:0648b08_3": "瞿曇老人。",
    "T47n1994B_001:0648b08_4": "未有後語。",
    "T47n1994B_001:0648b09_5": "雲蓋今日為大眾舉。",
    "T47n1994B_001:0648b09_6": "良久云。",
    "T47n1994B_001:0648b09_7": "太平本是將軍致。",
    "T47n1994B_001:0648b10_8": "不許將軍見太平。",
    "T47n1994B_001:0648b11_0": "勘辯",
    "T47n1994B_001:0648b12_0": "一日。",
    "T47n1994B_001:0648b12_1": "璉三生至。",
    "T47n1994B_001:0648b12_2": "師云。",
    "T47n1994B_001:0648b12_3": "寒風凜烈。",
    "T47n1994B_001:0648b12_4": "紅葉飄空。",
    "T47n1994B_001:0648b13_0": "祖室高流。",
    "T47n1994B_001:0648b13_1": "朝離何處。",
    "T47n1994B_001:0648b13_2": "璉云。",
    "T47n1994B_001:0648b13_3": "齋後離南源。",
    "T47n1994B_001:0648b13_4": "師云。",
    "T47n1994B_001:0648b14_5": "脚跟下一句。",
    "T47n1994B_001:0648b14_6": "作麼生道。",
    "T47n1994B_001:0648b14_7": "璉以坐具摵一摵。",
    "T47n1994B_001:0648b15_0": "師云。",
    "T47n1994B_001:0648b15_1": "只者箇。",
    "T47n1994B_001:0648b15_2": "別有在。",
    "T47n1994B_001:0648b15_3": "璉作抽身勢。",
    "T47n1994B_001:0648b15_4": "師云。",
    "T47n1994B_001:0648b15_5": "且坐喫茶。",
    "T47n1994B_001:0648b17_0": "二人新到。",
    "T47n1994B_001:0648b17_1": "師云。",
    "T47n1994B_001:0648b17_2": "春雨乍歇。",
    "T47n1994B_001:0648b17_3": "泥水未乾。",
    "T47n1994B_001:0648b17_4": "行脚高人。",
    "T47n1994B_001:0648b18_5": "如何話道。",
    "T47n1994B_001:0648b18_6": "僧云。",
    "T47n1994B_001:0648b18_7": "昔時離古寺。",
    "T47n1994B_001:0648b18_8": "今日覩師顏。",
    "T47n1994B_001:0648b19_0": "師云。",
    "T47n1994B_001:0648b19_1": "甚處念得者虛頭來。",
    "T47n1994B_001:0648b19_2": "僧云。",
    "T47n1994B_001:0648b19_3": "和尚幸是大人。",
    "T47n1994B_001:0648b20_4": "師云。",
    "T47n1994B_001:0648b20_5": "脚跟下一句。",
    "T47n1994B_001:0648b20_6": "作麼生道。",
    "T47n1994B_001:0648b20_7": "僧以坐具摵一摵。",
    "T47n1994B_001:0648b21_8": "師云。",
    "T47n1994B_001:0648b21_9": "與麼則楊岐燒香供養去也。",
    "T47n1994B_001:0648b21_10": "僧云。",
    "T47n1994B_001:0648b22_0": "明眼人難瞞。",
    "T47n1994B_001:0648b22_1": "師拈起坐具云。",
    "T47n1994B_001:0648b22_2": "第二行脚僧。",
    "T47n1994B_001:0648b23_0": "喚者箇作什麼。",
    "T47n1994B_001:0648b23_1": "僧云。",
    "T47n1994B_001:0648b23_2": "乍入叢林不會。",
    "T47n1994B_001:0648b23_3": "師云。",
    "T47n1994B_001:0648b23_4": "實頭人難得。",
    "T47n1994B_001:0648b24_5": "且坐喫茶。",
    "T47n1994B_001:0648b25_0": "問僧。",
    "T47n1994B_001:0648b25_1": "落葉飄飄。",
    "T47n1994B_001:0648b25_2": "朝離何處。",
    "T47n1994B_001:0648b25_3": "僧云。",
    "T47n1994B_001:0648b25_4": "齋後離南源。",
    "T47n1994B_001:0648b26_5": "師云。",
    "T47n1994B_001:0648b26_6": "脚跟下一句。",
    "T47n1994B_001:0648b26_7": "作麼生道。",
    "T47n1994B_001:0648b26_8": "僧云。",
    "T47n1994B_001:0648b26_9": "愁人莫向愁人說。",
    "T47n1994B_001:0648b27_10": "師云。",
    "T47n1994B_001:0648b27_11": "楊岐專為舉揚諸方去也。",
    "T47n1994B_001:0648b28_0": "僧云。",
    "T47n1994B_001:0648b28_1": "是什麼心行。",
    "T47n1994B_001:0648b28_2": "師云。",
    "T47n1994B_001:0648b28_3": "不得楊岐讚嘆。",
    "T47n1994B_001:0648b28_4": "僧擬議。",
    "T47n1994B_001:0648b29_5": "師云。",
    "T47n1994B_001:0648b29_6": "且坐喫茶。",
    "T47n1994B_001:0648b30_0": "一日。",
    "T47n1994B_001:0648b30_1": "數人新到相看。",
    "T47n1994B_001:0648b30_2": "師云。",
    "T47n1994B_001:0648b30_3": "陣勢既圓。",
    "T47n1994B_001:0648b30_4": "作家戰將。",
    "T47n1994B_001:0648c01_5": "何不出來與雲蓋相見。",
    "T47n1994B_001:0648c01_6": "僧打一坐具。",
    "T47n1994B_001:0648c01_7": "師云。",
    "T47n1994B_001:0648c02_0": "作家師僧。",
    "T47n1994B_001:0648c02_1": "僧又打一坐具。",
    "T47n1994B_001:0648c02_2": "師云。",
    "T47n1994B_001:0648c02_3": "一坐具兩坐具。",
    "T47n1994B_001:0648c03_4": "又作麼生。",
    "T47n1994B_001:0648c03_5": "僧擬議。",
    "T47n1994B_001:0648c03_6": "師乃背面立。",
    "T47n1994B_001:0648c03_7": "僧又打一坐具。",
    "T47n1994B_001:0648c04_8": "師云。",
    "T47n1994B_001:0648c04_9": "爾道。",
    "T47n1994B_001:0648c04_10": "雲蓋話頭在甚處。",
    "T47n1994B_001:0648c04_11": "僧云。",
    "T47n1994B_001:0648c04_12": "在者裏。",
    "T47n1994B_001:0648c05_13": "師云。",
    "T47n1994B_001:0648c05_14": "三十年後自悟去在。",
    "T47n1994B_001:0648c05_15": "雲蓋在上座手裏。",
    "T47n1994B_001:0648c06_16": "且坐喫茶。",
    "T47n1994B_001:0648c06_17": "師又問。",
    "T47n1994B_001:0648c06_18": "夏在甚處。",
    "T47n1994B_001:0648c06_19": "僧云神鼎。",
    "T47n1994B_001:0648c07_20": "師云。",
    "T47n1994B_001:0648c07_21": "早知上座神鼎來。",
    "T47n1994B_001:0648c07_22": "更不敢借問。",
    "T47n1994B_001:0648c08_0": "師。",
    "T47n1994B_001:0648c08_1": "次日參云。",
    "T47n1994B_001:0648c08_2": "昨日數人新到。",
    "T47n1994B_001:0648c08_3": "打雲蓋三下坐具。",
    "T47n1994B_001:0648c09_4": "恰似有箇悟處。",
    "T47n1994B_001:0648c09_5": "遂舉前話了。",
    "T47n1994B_001:0648c09_6": "乃云。",
    "T47n1994B_001:0648c09_7": "雲蓋敗闕處。",
    "T47n1994B_001:0648c10_8": "諸人總知。",
    "T47n1994B_001:0648c10_9": "新到得勝處。",
    "T47n1994B_001:0648c10_10": "諸人還知麼。",
    "T47n1994B_001:0648c10_11": "若也知得。",
    "T47n1994B_001:0648c11_12": "出來與雲蓋出氣。",
    "T47n1994B_001:0648c11_13": "若也不知。",
    "T47n1994B_001:0648c11_14": "明眼人前。",
    "T47n1994B_001:0648c12_15": "不得錯舉。",
    "T47n1994B_001:0648c13_0": "上堂。",
    "T47n1994B_001:0648c13_1": "云萬法本閑。",
    "T47n1994B_001:0648c13_2": "唯人自鬧。",
    "T47n1994B_001:0648c13_3": "以拄杖卓一下云。",
    "T47n1994B_001:0648c14_4": "大眾。",
    "T47n1994B_001:0648c14_5": "好看火燭。",
    "T47n1994B_001:0648c14_6": "明眼人前。",
    "T47n1994B_001:0648c14_7": "不得錯舉。",
    "T47n1994B_001:0648c15_0": "師訪孫比部。",
    "T47n1994B_001:0648c15_1": "值判公事次。",
    "T47n1994B_001:0648c15_2": "部云。",
    "T47n1994B_001:0648c15_3": "下官為王事所牽。",
    "T47n1994B_001:0648c16_4": "無由免離。",
    "T47n1994B_001:0648c16_5": "師云。",
    "T47n1994B_001:0648c16_6": "此是比部願弘深廣利濟群生。",
    "T47n1994B_001:0648c17_7": "比部云。",
    "T47n1994B_001:0648c17_8": "未審如何。",
    "T47n1994B_001:0648c17_9": "師云。",
    "T47n1994B_001:0648c17_10": "應現宰官身。",
    "T47n1994B_001:0648c18_11": "廣弘悲願深。",
    "T47n1994B_001:0648c18_12": "為人重指處。",
    "T47n1994B_001:0648c18_13": "棒下血霖霖。",
    "T47n1994B_001:0648c18_14": "比部因頌有省。",
    "T47n1994B_001:0648c19_15": "乃歸小廳。",
    "T47n1994B_001:0648c19_16": "坐次却問。",
    "T47n1994B_001:0648c19_17": "下官每日持齋喫菜。",
    "T47n1994B_001:0648c20_18": "還合諸聖也無。",
    "T47n1994B_001:0648c20_19": "師以頌贈之。",
    "T47n1994B_001:0648c20_20": "孫比部孫比部。",
    "T47n1994B_001:0648c21_21": "不將酒肉污腸肚。",
    "T47n1994B_001:0648c21_22": "侍僕妻兒渾不顧。",
    "T47n1994B_001:0648c22_23": "釋迦老子是誰做。",
    "T47n1994B_001:0648c22_24": "孫比部孫比部。",
    "T47n1994B_001:0648c23_0": "自術真讚",
    "T47n1994B_001:0648c24_0": "口似乞兒席袋。",
    "T47n1994B_001:0648c24_1": "鼻似園頭屎杓。",
    "T47n1994B_001:0648c24_2": "勞君神筆寫成。",
    "T47n1994B_001:0648c25_3": "一任天下卜度。",
    "T47n1994B_001:0648c26_0": "似驢非驢。",
    "T47n1994B_001:0648c26_1": "似馬非馬。",
    "T47n1994B_001:0648c26_2": "咄哉楊岐。",
    "T47n1994B_001:0648c26_3": "牽犁拽杷。",
    "T47n1994B_001:0648c27_0": "指驢又無尾。",
    "T47n1994B_001:0648c27_1": "喚牛又無角。",
    "T47n1994B_001:0648c27_2": "進前不移步。",
    "T47n1994B_001:0648c27_3": "退後豈收脚。",
    "T47n1994B_001:0648c28_4": "無言不同佛。",
    "T47n1994B_001:0648c28_5": "有語誰斟酌。",
    "T47n1994B_001:0648c28_6": "巧拙常現前。",
    "T47n1994B_001:0648c29_7": "勞君安寫邈。",
    "T47n1994B_001:0648c29_8": "　楊岐方會和尚後錄(終)"
}