[
    {
        "source_sentence": "南天竺國菩提達摩禪師觀門",
        "from": "T85n2832_001:1270b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。何名禪定　答曰。禪為亂心不起無動",
        "from": "T85n2832_001:1270b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無念為禪定。端心止念。無生無滅。無去無來。",
        "from": "T85n2832_001:1270b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堪然不動。",
        "from": "T85n2832_001:1270b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名之為禪定　何名為禪觀　答曰。",
        "from": "T85n2832_001:1270b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心神澄淨名之為禪。",
        "from": "T85n2832_001:1270b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照理分明名之為觀。",
        "from": "T85n2832_001:1270b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪觀自達無有錯謬。",
        "from": "T85n2832_001:1270b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名禪觀。",
        "from": "T85n2832_001:1270b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心神澄淨不生不滅不來不去湛然不動名之為禪　問曰。",
        "from": "T85n2832_001:1270b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名禪定　答曰。",
        "from": "T85n2832_001:1270b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定者梵音。",
        "from": "T85n2832_001:1270b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名功德聚林。",
        "from": "T85n2832_001:1270b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界諸佛皆說禪坐。",
        "from": "T85n2832_001:1270b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名功德聚林　又問。",
        "from": "T85n2832_001:1270b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何名禪法　答曰。",
        "from": "T85n2832_001:1270b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪法從通有次第。",
        "from": "T85n2832_001:1270b13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初學時從始終有七種觀門。",
        "from": "T85n2832_001:1270b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一住心門。",
        "from": "T85n2832_001:1270b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二空心門。",
        "from": "T85n2832_001:1270b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三無門。",
        "from": "T85n2832_001:1270b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四心解脫門。",
        "from": "T85n2832_001:1270b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五禪定門。",
        "from": "T85n2832_001:1270b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六真妙門。",
        "from": "T85n2832_001:1270b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七智慧門。",
        "from": "T85n2832_001:1270b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住心門者。",
        "from": "T85n2832_001:1270b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂心散動攀緣不住。",
        "from": "T85n2832_001:1270b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "專攝念住更無去動。",
        "from": "T85n2832_001:1270b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名住心門。",
        "from": "T85n2832_001:1270b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空心門者。",
        "from": "T85n2832_001:1270b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂看心轉追覺心空寂。",
        "from": "T85n2832_001:1270b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無去無來無有住處。",
        "from": "T85n2832_001:1270b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所依心。",
        "from": "T85n2832_001:1270b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故云空心門。",
        "from": "T85n2832_001:1270b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心無相門。",
        "from": "T85n2832_001:1270b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂心澄淨無有相貌。",
        "from": "T85n2832_001:1270b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非青非黃非赤非白。",
        "from": "T85n2832_001:1270b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非長非短非大非少。",
        "from": "T85n2832_001:1270b21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非方非圓湛然不動。",
        "from": "T85n2832_001:1270b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名無相門。",
        "from": "T85n2832_001:1270b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心解脫門者。",
        "from": "T85n2832_001:1270b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知心無繫無縛。",
        "from": "T85n2832_001:1270b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱不來上心。",
        "from": "T85n2832_001:1270b23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名心解脫門。",
        "from": "T85n2832_001:1270b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定者。",
        "from": "T85n2832_001:1270b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西域梵音。",
        "from": "T85n2832_001:1270b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐言靜慮。",
        "from": "T85n2832_001:1270b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺心寂靜。",
        "from": "T85n2832_001:1270b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行時住時坐時臥時皆悉寂靜無有散動。",
        "from": "T85n2832_001:1270b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名寂靜。",
        "from": "T85n2832_001:1270b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如門者。",
        "from": "T85n2832_001:1270b25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺心無心等同虛空。",
        "from": "T85n2832_001:1270b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍周法界平等不二。",
        "from": "T85n2832_001:1270b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無千無變。",
        "from": "T85n2832_001:1270b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名真如門。",
        "from": "T85n2832_001:1270b27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧門者。",
        "from": "T85n2832_001:1270b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識了一切名之為智。",
        "from": "T85n2832_001:1270b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契達空源名之為慧。",
        "from": "T85n2832_001:1270b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名智慧門。",
        "from": "T85n2832_001:1270b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名究竟道。",
        "from": "T85n2832_001:1270b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦名大乘無相禪觀門。",
        "from": "T85n2832_001:1270b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則是修禪學道故。",
        "from": "T85n2832_001:1270c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪有七種觀門。",
        "from": "T85n2832_001:1270c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大聲念佛得十種功德。",
        "from": "T85n2832_001:1270c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者不聞惡聲。",
        "from": "T85n2832_001:1270c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者念佛不散。",
        "from": "T85n2832_001:1270c02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者排去睡眠。",
        "from": "T85n2832_001:1270c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者勇猛精進。",
        "from": "T85n2832_001:1270c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五者諸天歡喜。",
        "from": "T85n2832_001:1270c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六者魔軍怖畏。",
        "from": "T85n2832_001:1270c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七者聲振十方。",
        "from": "T85n2832_001:1270c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八者三途息苦。",
        "from": "T85n2832_001:1270c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九者三昧現前。",
        "from": "T85n2832_001:1270c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十者往生淨土。",
        "from": "T85n2832_001:1270c05_11",
        "context_with_next_sentence": true
    }
]