{
    "X26n0546_001:0841c03_0": "心經說",
    "X26n0546_001:0841c05_0": "雪浪釋　洪恩　述",
    "X26n0546_001:0841c06_0": "般若心經。",
    "X26n0546_001:0841c06_1": "是世尊以人顯法。",
    "X26n0546_001:0841c06_2": "照見蘊空。",
    "X26n0546_001:0841c06_3": "而明甚深般若也。",
    "X26n0546_001:0841c07_4": "恐人不解。",
    "X26n0546_001:0841c07_5": "故自釋之曰。",
    "X26n0546_001:0841c07_6": "照見五蘊皆空度一切苦厄。",
    "X26n0546_001:0841c08_7": "何為蘊空。",
    "X26n0546_001:0841c08_8": "以其色即是空。",
    "X26n0546_001:0841c08_9": "空即是色。",
    "X26n0546_001:0841c08_10": "而受想行識。",
    "X26n0546_001:0841c09_11": "莫不皆空也。",
    "X26n0546_001:0841c09_12": "恐人不知色即是空之旨。",
    "X26n0546_001:0841c09_13": "而復釋之曰。",
    "X26n0546_001:0841c10_14": "是諸法空相。",
    "X26n0546_001:0841c10_15": "即五蘊之中。",
    "X26n0546_001:0841c10_16": "生而本自不生。",
    "X26n0546_001:0841c10_17": "滅亦元無有滅。",
    "X26n0546_001:0841c11_18": "不垢不淨不增不減者。",
    "X26n0546_001:0841c11_19": "既此空相。",
    "X26n0546_001:0841c11_20": "雖具五蘊諸法。",
    "X26n0546_001:0841c12_21": "而原無生滅垢淨增減。",
    "X26n0546_001:0841c12_22": "則無色無受想行識明矣。",
    "X26n0546_001:0841c13_23": "是為照見五蘊皆空。",
    "X26n0546_001:0841c13_24": "五蘊既空。",
    "X26n0546_001:0841c13_25": "則世之根塵識三。",
    "X26n0546_001:0841c14_0": "出世之四諦十二緣。",
    "X26n0546_001:0841c14_1": "以至能證所證。",
    "X26n0546_001:0841c14_2": "莫不皆空。",
    "X26n0546_001:0841c14_3": "既無世之陰界。",
    "X26n0546_001:0841c15_4": "則亦無出世智得也。",
    "X26n0546_001:0841c15_5": "能所既忘。",
    "X26n0546_001:0841c15_6": "五蘊何有。",
    "X26n0546_001:0841c16_0": "故都無所得。",
    "X26n0546_001:0841c16_1": "方名甚深般若。",
    "X26n0546_001:0841c16_2": "菩薩依此。",
    "X26n0546_001:0841c16_3": "而心無罣礙。",
    "X26n0546_001:0841c17_0": "恐怖遠離顛倒夢想。",
    "X26n0546_001:0841c17_1": "能至究竟涅槃。",
    "X26n0546_001:0841c17_2": "三世諸佛依此。",
    "X26n0546_001:0841c18_0": "而阿耨菩提可得。",
    "X26n0546_001:0841c18_1": "五住結盡。",
    "X26n0546_001:0841c18_2": "二死俱忘。",
    "X26n0546_001:0841c18_3": "何苦惱厄難而不度耶。",
    "X26n0546_001:0841c19_4": "皆由照見蘊空。",
    "X26n0546_001:0841c19_5": "而能如是。",
    "X26n0546_001:0841c19_6": "故讚嘆之曰。",
    "X26n0546_001:0841c19_7": "而此蘊空甚深般若。",
    "X26n0546_001:0841c20_8": "是大明呪神呪。",
    "X26n0546_001:0841c20_9": "以其能革凡成聖。",
    "X26n0546_001:0841c21_0": "如果裸之呪螟蛉。",
    "X26n0546_001:0841c21_1": "而不自知。",
    "X26n0546_001:0841c21_2": "恐人不信。",
    "X26n0546_001:0841c21_3": "復曰。",
    "X26n0546_001:0841c21_4": "能除一切苦。",
    "X26n0546_001:0841c22_5": "真實不虗。",
    "X26n0546_001:0841c22_6": "後說密呪。",
    "X26n0546_001:0841c22_7": "使人斷言語息思想。",
    "X26n0546_001:0841c22_8": "而契此蘊空般若也。",
    "X26n0546_001:0841c23_9": "此則但離妄緣。",
    "X26n0546_001:0841c23_10": "即如如佛。",
    "X26n0546_001:0841c23_11": "而觀世音能行此耳。",
    "X26n0546_001:0841c24_12": "故名自在。",
    "X26n0546_001:0841c24_13": "以至六百卷大經。",
    "X26n0546_001:0841c24_14": "以此為心。",
    "X26n0546_001:0841c24_15": "如人之有心。",
    "X26n0546_001:0842a01_16": "以為一身之主耳。",
    "X26n0546_001:0842a01_17": "何等簡易直截明白。",
    "X26n0546_001:0842a01_18": "而世之裨販之徒。",
    "X26n0546_001:0842a02_19": "自衒自媒。",
    "X26n0546_001:0842a02_20": "妄談般若。",
    "X26n0546_001:0842a02_21": "[這-言+(一/ㄙ)]橫生穿鑿。",
    "X26n0546_001:0842a02_22": "牽枝引蔓。",
    "X26n0546_001:0842a03_23": "礙正知見。",
    "X26n0546_001:0842a03_24": "一盲唱之於前。",
    "X26n0546_001:0842a03_25": "百盲從而和之於後。",
    "X26n0546_001:0842a04_26": "瞎人眼目。",
    "X26n0546_001:0842a04_27": "徒增業苦。",
    "X26n0546_001:0842a04_28": "予憫無聞後進。",
    "X26n0546_001:0842a04_29": "蔓草難除。",
    "X26n0546_001:0842a04_30": "佛燈欲滅。",
    "X26n0546_001:0842a05_31": "故不得已隨筆。",
    "X26n0546_001:0842a05_32": "略記經之首尾之旨如是。",
    "X26n0546_001:0842a05_33": "以俟知言。",
    "X26n0546_001:0842a06_34": "大似揚聲止響。",
    "X26n0546_001:0842a06_35": "予欲無言可乎。",
    "X26n0546_001:0842a08_0": "心經說(終)"
}