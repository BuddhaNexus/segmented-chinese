{
    "X72n1444_005:0797c01_0": "會稽雲門湛然澄禪師語錄卷第五",
    "X72n1444_005:0797c02_0": "門人明凡　錄",
    "X72n1444_005:0797c03_0": "吳興丁元公",
    "X72n1444_005:0797c04_0": "山陰祁駿佳　編",
    "X72n1444_005:0797c05_0": "頌古",
    "X72n1444_005:0797c06_0": "世尊初生",
    "X72n1444_005:0797c07_0": "獅子初生便異羣。",
    "X72n1444_005:0797c07_1": "等閒哮吼好驚人。",
    "X72n1444_005:0797c07_2": "韶陽冷眼難瞞過。",
    "X72n1444_005:0797c08_3": "打殺擬圖天下平。",
    "X72n1444_005:0797c09_0": "世尊陞座",
    "X72n1444_005:0797c10_0": "坐臥行藏本自然。",
    "X72n1444_005:0797c10_1": "文殊特地逞顢頇。",
    "X72n1444_005:0797c10_2": "阿誰日用不如此。",
    "X72n1444_005:0797c11_3": "何故人人作話參。",
    "X72n1444_005:0797c11_4": "須領略。",
    "X72n1444_005:0797c11_5": "有交關。",
    "X72n1444_005:0797c11_6": "山河莫向鏡中看。",
    "X72n1444_005:0797c13_0": "世尊拈花",
    "X72n1444_005:0797c14_0": "拈起人天盡失措。",
    "X72n1444_005:0797c14_1": "頭陀解笑樂為苦。",
    "X72n1444_005:0797c14_2": "承虗接響謾流傳。",
    "X72n1444_005:0797c15_3": "賺殺兒孫無盡數。",
    "X72n1444_005:0797c16_0": "女子出定",
    "X72n1444_005:0797c17_0": "相逢不拈出。",
    "X72n1444_005:0797c17_1": "舉意便知有。",
    "X72n1444_005:0797c17_2": "更欲問如何。",
    "X72n1444_005:0797c17_3": "金毛變作狗。",
    "X72n1444_005:0797c18_0": "南泉斬猫",
    "X72n1444_005:0797c19_0": "是彼是此起論端。",
    "X72n1444_005:0797c19_1": "幸有公心鹽鐵官。",
    "X72n1444_005:0797c19_2": "提起利刀這一剁。",
    "X72n1444_005:0797c20_3": "不知此外幾何般。",
    "X72n1444_005:0797c20_4": "欲顯克家子。",
    "X72n1444_005:0797c20_5": "公案要伊圓。",
    "X72n1444_005:0797c20_6": "豈識趙州解機變。",
    "X72n1444_005:0797c21_7": "草鞋頭戴把人瞞。",
    "X72n1444_005:0797c22_0": "狗子佛性",
    "X72n1444_005:0797c23_0": "佛性有。",
    "X72n1444_005:0797c23_1": "佛性無。",
    "X72n1444_005:0797c23_2": "不許重重唱鷓鴣。",
    "X72n1444_005:0797c23_3": "脚底若教紅線斷。",
    "X72n1444_005:0797c24_0": "達摩元是老臊胡。",
    "X72n1444_005:0798a01_0": "臨濟參大愚",
    "X72n1444_005:0798a02_0": "牛身喫跌馬身翻。",
    "X72n1444_005:0798a02_1": "始信婆心非等閒。",
    "X72n1444_005:0798a02_2": "多口自招三築脇。",
    "X72n1444_005:0798a03_3": "風顛繇是弄顢頇。",
    "X72n1444_005:0798a04_0": "曹山好顛酒",
    "X72n1444_005:0798a05_0": "獅子出窟恣游戲。",
    "X72n1444_005:0798a05_1": "自在縱橫絕諱忌。",
    "X72n1444_005:0798a05_2": "野干狐狼漫欲隨。",
    "X72n1444_005:0798a06_3": "等閒哮吼驚天地。",
    "X72n1444_005:0798a07_0": "北斗藏身",
    "X72n1444_005:0798a08_0": "問得希奇答亦巧。",
    "X72n1444_005:0798a08_1": "言前薦得猶遲了。",
    "X72n1444_005:0798a08_2": "人皆愛月夜眠遲。",
    "X72n1444_005:0798a09_3": "我獨惜花春起早。",
    "X72n1444_005:0798a10_0": "雲門對一說",
    "X72n1444_005:0798a11_0": "對一說。",
    "X72n1444_005:0798a11_1": "休辯別。",
    "X72n1444_005:0798a11_2": "踏著秤鎚原是銕。",
    "X72n1444_005:0798a11_3": "韶陽靴裏動脚指。",
    "X72n1444_005:0798a12_0": "宗門教門同話月。",
    "X72n1444_005:0798a13_0": "雲門倒一說",
    "X72n1444_005:0798a14_0": "倒一說。",
    "X72n1444_005:0798a14_1": "六月紅罏飛片雪。",
    "X72n1444_005:0798a14_2": "昨夜海神怒不已。",
    "X72n1444_005:0798a14_3": "一鞭擊碎珊瑚月。",
    "X72n1444_005:0798a16_0": "法眼指簾",
    "X72n1444_005:0798a17_0": "當場掇出膠盆子。",
    "X72n1444_005:0798a17_1": "沒眼韓獹逐塊來。",
    "X72n1444_005:0798a17_2": "若解言前這一著。",
    "X72n1444_005:0798a18_3": "清凉無地可藏埋。",
    "X72n1444_005:0798a19_0": "德山托鉢",
    "X72n1444_005:0798a20_0": "無言音韻語如雷。",
    "X72n1444_005:0798a20_1": "逼塞胸襟祇自迷。",
    "X72n1444_005:0798a20_2": "已得巖頭傍著眼。",
    "X72n1444_005:0798a21_3": "得便宜處失便宜。",
    "X72n1444_005:0798a21_4": "密啟意。",
    "X72n1444_005:0798a21_5": "絕施為。",
    "X72n1444_005:0798a21_6": "攔頭把柂共維持。",
    "X72n1444_005:0798a22_7": "後來祇得三年活。",
    "X72n1444_005:0798a22_8": "引得兒孫逐隊疑。",
    "X72n1444_005:0798a23_0": "若見不見。",
    "X72n1444_005:0798a23_1": "自然非彼不見之相愁腸百結事難別。",
    "X72n1444_005:0798a24_2": "啞子喫苦向誰說。",
    "X72n1444_005:0798a24_3": "有語只可訴東風。",
    "X72n1444_005:0798b01_4": "相知爭解心中屈。",
    "X72n1444_005:0798b02_0": "洛浦云。",
    "X72n1444_005:0798b02_1": "雖在寰闠裏。",
    "X72n1444_005:0798b02_2": "要且無人識大隱居廛小隱山。",
    "X72n1444_005:0798b03_3": "休將心識欲逃難。",
    "X72n1444_005:0798b03_4": "天書天子簡點作。",
    "X72n1444_005:0798b04_5": "誰識簡點趙大郎。",
    "X72n1444_005:0798b05_0": "臨濟云。",
    "X72n1444_005:0798b05_1": "我當時得黃檗三頓痛棒。",
    "X72n1444_005:0798b05_2": "爾今更思一頓又安得三頓直如蒿子拂。",
    "X72n1444_005:0798b07_3": "一喝從教三日聾。",
    "X72n1444_005:0798b07_4": "黃河水是源頭濁。",
    "X72n1444_005:0798b08_5": "此道方知異別宗。",
    "X72n1444_005:0798b09_0": "善財參德雲比丘",
    "X72n1444_005:0798b10_0": "渺然雲水路途窮。",
    "X72n1444_005:0798b10_1": "進退無尋沒影踪。",
    "X72n1444_005:0798b10_2": "依稀似曲方堪聽。",
    "X72n1444_005:0798b11_3": "又被風吹別調中。",
    "X72n1444_005:0798b12_0": "宋太祖問僧。",
    "X72n1444_005:0798b12_1": "如來六年成道。",
    "X72n1444_005:0798b12_2": "成得箇什麼。",
    "X72n1444_005:0798b12_3": "僧無語。",
    "X72n1444_005:0798b13_4": "雪竇著語云。",
    "X72n1444_005:0798b13_5": "將謂陛下忘却皇帝面前不造次。",
    "X72n1444_005:0798b14_6": "權將柳絮喚狐裘。",
    "X72n1444_005:0798b14_7": "豈知逐語尋言者。",
    "X72n1444_005:0798b15_8": "翰墨從教入御樓。",
    "X72n1444_005:0798b16_0": "京寺回祿。",
    "X72n1444_005:0798b16_1": "太宗問僧。",
    "X72n1444_005:0798b16_2": "白馬壇上放光。",
    "X72n1444_005:0798b16_3": "為什麼這裏却遭回祿。",
    "X72n1444_005:0798b17_4": "僧不對。",
    "X72n1444_005:0798b17_5": "後有著語云。",
    "X72n1444_005:0798b17_6": "陛下不忘付囑寶壇放光。",
    "X72n1444_005:0798b19_7": "京寺火爍。",
    "X72n1444_005:0798b19_8": "正眼看來。",
    "X72n1444_005:0798b19_9": "兩皆是錯。",
    "X72n1444_005:0798b19_10": "只有金輪聖天子。",
    "X72n1444_005:0798b20_11": "不昧靈山親付托。",
    "X72n1444_005:0798b21_0": "瑞巖主人公",
    "X72n1444_005:0798b22_0": "容谷步虗聲。",
    "X72n1444_005:0798b22_1": "一問還一答。",
    "X72n1444_005:0798b22_2": "覓之無形影。",
    "X72n1444_005:0798b22_3": "音聲又非別。",
    "X72n1444_005:0798b23_0": "求之不可求。",
    "X72n1444_005:0798b23_1": "撇之不可撇。",
    "X72n1444_005:0798b23_2": "思量惱殺人。",
    "X72n1444_005:0798b23_3": "悶悶彊自歇。",
    "X72n1444_005:0798b24_0": "婆子燒庵",
    "X72n1444_005:0798c01_0": "撲面來時無一物。",
    "X72n1444_005:0798c01_1": "明眼衲僧莫輕忽。",
    "X72n1444_005:0798c01_2": "髑髏一喝三日聾。",
    "X72n1444_005:0798c02_3": "直下須彌踏出骨。",
    "X72n1444_005:0798c03_0": "馬祖三十年不少鹽醬",
    "X72n1444_005:0798c04_0": "一尺水。",
    "X72n1444_005:0798c04_1": "一丈波。",
    "X72n1444_005:0798c04_2": "知恩方解報恩多。",
    "X72n1444_005:0798c04_3": "法堂高呌悔悔悔。",
    "X72n1444_005:0798c05_0": "恨不當時兩踏何。",
    "X72n1444_005:0798c06_0": "罽賓國王斬尊者首因緣。",
    "X72n1444_005:0798c06_1": "雪竇著語云。",
    "X72n1444_005:0798c06_2": "作家君王。",
    "X72n1444_005:0798c07_3": "天然猶在。",
    "X72n1444_005:0798c07_4": "黃龍新和尚云。",
    "X72n1444_005:0798c07_5": "既是作家君王。",
    "X72n1444_005:0798c08_6": "因甚臂落。",
    "X72n1444_005:0798c08_7": "大慧和尚云。",
    "X72n1444_005:0798c08_8": "孟八郎漢又恁麼去也公案參差較不多。",
    "X72n1444_005:0798c10_9": "擬思量處轉誵訛。",
    "X72n1444_005:0798c10_10": "老僧無力資譚柄。",
    "X72n1444_005:0798c11_11": "只向人前念佛陀。",
    "X72n1444_005:0798c12_0": "臺山婆子",
    "X72n1444_005:0798c13_0": "一指點。",
    "X72n1444_005:0798c13_1": "二勘破。",
    "X72n1444_005:0798c13_2": "彼彼商量都話墮。",
    "X72n1444_005:0798c13_3": "銕牛自是烱雙眸。",
    "X72n1444_005:0798c14_0": "擬意思量却差過。",
    "X72n1444_005:0798c15_0": "皷山赴請",
    "X72n1444_005:0798c16_0": "中途折箭有因緣。",
    "X72n1444_005:0798c16_1": "不是安排非偶然。",
    "X72n1444_005:0798c16_2": "句裏若知虗實意。",
    "X72n1444_005:0798c17_3": "蚩尤雖勇怯軒轅。",
    "X72n1444_005:0798c18_0": "黃龍參慈明",
    "X72n1444_005:0798c19_0": "若有喫棒分。",
    "X72n1444_005:0798c19_1": "慈明不合恁麼道。",
    "X72n1444_005:0798c19_2": "若無喫棒分。",
    "X72n1444_005:0798c19_3": "雲門不合恁麼道。",
    "X72n1444_005:0798c20_4": "兩頭如不解。",
    "X72n1444_005:0798c20_5": "中間空懊惱。",
    "X72n1444_005:0798c20_6": "若人認得聲。",
    "X72n1444_005:0798c20_7": "哩哩蓮花落。",
    "X72n1444_005:0798c22_0": "清淨本然。",
    "X72n1444_005:0798c22_1": "云何忽生山河大地有口道不得。",
    "X72n1444_005:0798c23_2": "有眼見不及。",
    "X72n1444_005:0798c23_3": "報汝解空者。",
    "X72n1444_005:0798c23_4": "不許離聲色。",
    "X72n1444_005:0798c24_0": "五位正偏",
    "X72n1444_005:0799a01_0": "正中偏。",
    "X72n1444_005:0799a01_1": "啞子喫苦向誰言。",
    "X72n1444_005:0799a01_2": "開口已招人貶笑。",
    "X72n1444_005:0799a01_3": "祇應肚裏哭蒼天。",
    "X72n1444_005:0799a03_0": "偏中正。",
    "X72n1444_005:0799a03_1": "物物頭頭行正令。",
    "X72n1444_005:0799a03_2": "信手拈來用得親。",
    "X72n1444_005:0799a03_3": "擬欲求玄俱是病。",
    "X72n1444_005:0799a05_0": "正中來。",
    "X72n1444_005:0799a05_1": "云何石女也懷胎。",
    "X72n1444_005:0799a05_2": "天明生箇白頭子。",
    "X72n1444_005:0799a05_3": "九月楊花遍地開。",
    "X72n1444_005:0799a07_0": "偏中至。",
    "X72n1444_005:0799a07_1": "狹路相逢不須避。",
    "X72n1444_005:0799a07_2": "線去針來本自然。",
    "X72n1444_005:0799a07_3": "目擊道存兩會意。",
    "X72n1444_005:0799a09_0": "兼中到。",
    "X72n1444_005:0799a09_1": "動靜不分真箇妙。",
    "X72n1444_005:0799a09_2": "著衣喫飯本尋常。",
    "X72n1444_005:0799a09_3": "却似大蟲裹紙帽。",
    "X72n1444_005:0799a11_0": "靈雲見桃花(以下四則俱無擇師請)幸哉尋劒客。",
    "X72n1444_005:0799a12_1": "眼睛清且直。",
    "X72n1444_005:0799a12_2": "手捉炤妖鏡。",
    "X72n1444_005:0799a12_3": "識破玄沙賊。",
    "X72n1444_005:0799a13_0": "臺山婆子",
    "X72n1444_005:0799a14_0": "青草當路出。",
    "X72n1444_005:0799a14_1": "特地成荊棘。",
    "X72n1444_005:0799a14_2": "覿面有何故。",
    "X72n1444_005:0799a14_3": "却云好不識。",
    "X72n1444_005:0799a15_0": "三玄三要",
    "X72n1444_005:0799a16_0": "老儂不識字。",
    "X72n1444_005:0799a16_1": "錯讀己已巳。",
    "X72n1444_005:0799a16_2": "去問大大人。",
    "X72n1444_005:0799a16_3": "答我渠似你。",
    "X72n1444_005:0799a17_0": "猫兒偏愛捉老鼠",
    "X72n1444_005:0799a18_0": "磁石不吸銕。",
    "X72n1444_005:0799a18_1": "眼見水晶瑕。",
    "X72n1444_005:0799a18_2": "彼彼不相到。",
    "X72n1444_005:0799a18_3": "和尚是僧家。",
    "X72n1444_005:0799a19_0": "黃龍三關",
    "X72n1444_005:0799a20_0": "佛手驢脚生緣。",
    "X72n1444_005:0799a20_1": "虗實兩般並拈。",
    "X72n1444_005:0799a20_2": "不教徐六擔板。",
    "X72n1444_005:0799a20_3": "各自看做一邊。",
    "X72n1444_005:0799a21_4": "昨日前村下雨。",
    "X72n1444_005:0799a21_5": "今朝火內生蓮。",
    "X72n1444_005:0799a21_6": "石女呵呵大笑。",
    "X72n1444_005:0799a22_7": "說破值甚低錢。",
    "X72n1444_005:0799a23_0": "高峯無夢無想",
    "X72n1444_005:0799a24_0": "四大無我心如風。",
    "X72n1444_005:0799a24_1": "箇中誰是主人公。",
    "X72n1444_005:0799a24_2": "廓然撲落元無物。",
    "X72n1444_005:0799b01_3": "始悔從前錯用功。",
    "X72n1444_005:0799b02_0": "師示眾云。",
    "X72n1444_005:0799b02_1": "天童和尚頌臺山婆子。",
    "X72n1444_005:0799b02_2": "可謂只解推倒。",
    "X72n1444_005:0799b03_3": "不會扶起。",
    "X72n1444_005:0799b03_4": "乃作三頌趙州婆子。",
    "X72n1444_005:0799b04_5": "作用通天。",
    "X72n1444_005:0799b04_6": "用而不用。",
    "X72n1444_005:0799b04_7": "談而不談。",
    "X72n1444_005:0799b04_8": "聖莫能測。",
    "X72n1444_005:0799b05_0": "鬼莫能宣。",
    "X72n1444_005:0799b05_1": "便是諸佛。",
    "X72n1444_005:0799b05_2": "口掛壁間。",
    "X72n1444_005:0799b05_3": "且道何以如此。",
    "X72n1444_005:0799b05_4": "若知燈是火。",
    "X72n1444_005:0799b06_5": "拍手哭蒼天。",
    "X72n1444_005:0799b07_0": "同道方知路坦夷。",
    "X72n1444_005:0799b07_1": "莫教脚下意遲疑。",
    "X72n1444_005:0799b07_2": "欲從舌底求消息。",
    "X72n1444_005:0799b08_3": "辜負先賢不借機。",
    "X72n1444_005:0799b09_0": "是賊識賊。",
    "X72n1444_005:0799b09_1": "當行識行。",
    "X72n1444_005:0799b09_2": "傍觀者哂。",
    "X72n1444_005:0799b09_3": "知味者甜。",
    "X72n1444_005:0799b09_4": "臺山路直。",
    "X72n1444_005:0799b10_0": "何用商量。",
    "X72n1444_005:0799b10_1": "欲問如何。",
    "X72n1444_005:0799b10_2": "北斗南看。",
    "X72n1444_005:0799b11_0": "世尊陞座",
    "X72n1444_005:0799b12_0": "打鼓弄琵琶。",
    "X72n1444_005:0799b12_1": "相逢兩會家。",
    "X72n1444_005:0799b12_2": "既有知音者。",
    "X72n1444_005:0799b12_3": "下座脫袈裟。",
    "X72n1444_005:0799b13_0": "大顛扣齒",
    "X72n1444_005:0799b14_0": "寰中端坐定龍蛇。",
    "X72n1444_005:0799b14_1": "扣齒一般兩樣價。",
    "X72n1444_005:0799b14_2": "半是文公半座元。",
    "X72n1444_005:0799b15_3": "一寶拈來同一賽。",
    "X72n1444_005:0799b16_0": "孚上座勘鼓山",
    "X72n1444_005:0799b17_0": "口行人事探頭過。",
    "X72n1444_005:0799b17_1": "便乃翻身入賊窩。",
    "X72n1444_005:0799b17_2": "不是雪峯知的確。",
    "X72n1444_005:0799b18_3": "雙雙跳入是非窠。",
    "X72n1444_005:0799b19_0": "德山托鉢",
    "X72n1444_005:0799b20_0": "托鉢無言方丈去。",
    "X72n1444_005:0799b20_1": "諸方慢謂失便宜。",
    "X72n1444_005:0799b20_2": "不是巖頭傍著眼。",
    "X72n1444_005:0799b21_3": "從教後代逐狐疑。",
    "X72n1444_005:0799b22_0": "九峯侍者不肯泰首座",
    "X72n1444_005:0799b23_0": "元座功成一炷香。",
    "X72n1444_005:0799b23_1": "豁然脫去現空王。",
    "X72n1444_005:0799b23_2": "九峯縱有渾身口。",
    "X72n1444_005:0799b24_3": "欲問無門論短長。",
    "X72n1444_005:0799c01_0": "婆子燒庵(剡城周九賓求頌)",
    "X72n1444_005:0799c02_0": "撲面來時無一物。",
    "X72n1444_005:0799c02_1": "明眼衲僧莫輕忽。",
    "X72n1444_005:0799c02_2": "屈屈。",
    "X72n1444_005:0799c02_3": "若是臨濟揣出骨。",
    "X72n1444_005:0799c04_0": "德山棒。",
    "X72n1444_005:0799c04_1": "臨濟喝。",
    "X72n1444_005:0799c04_2": "這箇婆子與並列。",
    "X72n1444_005:0799c04_3": "堪笑韓獹逐塊徒。",
    "X72n1444_005:0799c05_0": "浩浩商量無盡歇。",
    "X72n1444_005:0799c06_0": "明得目前事。",
    "X72n1444_005:0799c06_1": "老婆賊已敗。",
    "X72n1444_005:0799c06_2": "打出虗空髓。",
    "X72n1444_005:0799c06_3": "莫教尋內外。",
    "X72n1444_005:0799c07_0": "撲頭撲面。",
    "X72n1444_005:0799c07_1": "機如閃電。",
    "X72n1444_005:0799c07_2": "擬欲相酬。",
    "X72n1444_005:0799c07_3": "即已不便。",
    "X72n1444_005:0799c08_0": "長水問瑯琊清淨本然話頌",
    "X72n1444_005:0799c09_0": "騎賊馬。",
    "X72n1444_005:0799c09_1": "奪賊鎗。",
    "X72n1444_005:0799c09_2": "於中無事可商量。",
    "X72n1444_005:0799c09_3": "不知長水何緣故。",
    "X72n1444_005:0799c10_0": "留得清名萬古揚。",
    "X72n1444_005:0799c11_0": "瑯琊不曾言。",
    "X72n1444_005:0799c11_1": "長水無可悟。",
    "X72n1444_005:0799c11_2": "八字如打開。",
    "X72n1444_005:0799c11_3": "兩手相分付。",
    "X72n1444_005:0799c12_0": "宋太祖托鉢問丞相王隨曰。",
    "X72n1444_005:0799c12_1": "大庾嶺頭提不起。",
    "X72n1444_005:0799c13_2": "今日為甚麼在朕手裏。",
    "X72n1444_005:0799c13_3": "王無語貧人思舊債。",
    "X72n1444_005:0799c14_4": "美曲換新聲。",
    "X72n1444_005:0799c14_5": "切勿隨他語。",
    "X72n1444_005:0799c14_6": "休論鉢重輕。",
    "X72n1444_005:0799c15_0": "臥雲深處不朝天",
    "X72n1444_005:0799c16_0": "一真法界本無方。",
    "X72n1444_005:0799c16_1": "南北東西個裏圓。",
    "X72n1444_005:0799c16_2": "舉意已知千里隔。",
    "X72n1444_005:0799c17_3": "若欲凝然墮聖顏。",
    "X72n1444_005:0799c18_0": "漢月問再參馬祖因緣。",
    "X72n1444_005:0799c18_1": "黃蘗云。",
    "X72n1444_005:0799c18_2": "因師舉。",
    "X72n1444_005:0799c18_3": "得見馬祖大機之用。",
    "X72n1444_005:0799c19_4": "又仰山云。",
    "X72n1444_005:0799c19_5": "此是顯大機大用。",
    "X72n1444_005:0799c20_0": "請問如何是大機之用。",
    "X72n1444_005:0799c20_1": "師云。",
    "X72n1444_005:0799c20_2": "一喝分賓主。",
    "X72n1444_005:0799c20_3": "炤用一時行(以下十七頌俱漢月請)一棒一條痕。",
    "X72n1444_005:0799c22_4": "一掌一握血。",
    "X72n1444_005:0799c22_5": "語下便知人。",
    "X72n1444_005:0799c22_6": "看孔方著橛。",
    "X72n1444_005:0799c23_0": "如何是大機大用。",
    "X72n1444_005:0799c23_1": "師云。",
    "X72n1444_005:0799c23_2": "棒下無生忍。",
    "X72n1444_005:0799c23_3": "臨機不讓師句裏藏機作者知。",
    "X72n1444_005:0800a01_4": "不教野干逐狐疑。",
    "X72n1444_005:0800a01_5": "三日耳聾猶是鈍。",
    "X72n1444_005:0800a02_6": "饒他吐舌也名遲。",
    "X72n1444_005:0800a03_0": "機用則不問。",
    "X72n1444_005:0800a03_1": "如何是大的道理。",
    "X72n1444_005:0800a03_2": "師云。",
    "X72n1444_005:0800a03_3": "石女兒生子即向你道舉意便令三界窄。",
    "X72n1444_005:0800a05_4": "無心凡聖總包含。",
    "X72n1444_005:0800a05_5": "泥牛昨夜狂心起。",
    "X72n1444_005:0800a06_6": "觸碎須彌跳出欄。",
    "X72n1444_005:0800a07_0": "既有大機之用。",
    "X72n1444_005:0800a07_1": "如何是大用之機。",
    "X72n1444_005:0800a07_2": "師云。",
    "X72n1444_005:0800a07_3": "入門便棒。",
    "X72n1444_005:0800a08_4": "不名性[跳兆+參]霸陵橋斷數張飛。",
    "X72n1444_005:0800a09_5": "百萬曹兵箇箇疑。",
    "X72n1444_005:0800a09_6": "多智張遼雖識破。",
    "X72n1444_005:0800a10_7": "劉君早已渡江西。",
    "X72n1444_005:0800a11_0": "進云。",
    "X72n1444_005:0800a11_1": "更有問頭。",
    "X72n1444_005:0800a11_2": "今世所略。",
    "X72n1444_005:0800a11_3": "請和尚慈悲具答。",
    "X72n1444_005:0800a12_0": "問馬祖而下。",
    "X72n1444_005:0800a12_1": "賓主句具在再參公案中。",
    "X72n1444_005:0800a12_2": "請問何處是賓中主。",
    "X72n1444_005:0800a13_3": "師云。",
    "X72n1444_005:0800a13_4": "擬欲買草鞋隨流認得性。",
    "X72n1444_005:0800a14_5": "何喜復何憂。",
    "X72n1444_005:0800a14_6": "逢場去作戲。",
    "X72n1444_005:0800a14_7": "不必起閑愁。",
    "X72n1444_005:0800a15_0": "何處是主中賓。",
    "X72n1444_005:0800a15_1": "師云。",
    "X72n1444_005:0800a15_2": "著衣與喫飯使婢呼奴出現成。",
    "X72n1444_005:0800a16_3": "隨緣成辦任天真。",
    "X72n1444_005:0800a16_4": "若人識得東風面。",
    "X72n1444_005:0800a17_5": "萬紫千紅總是春。",
    "X72n1444_005:0800a18_0": "何處是主中主。",
    "X72n1444_005:0800a18_1": "師云。",
    "X72n1444_005:0800a18_2": "舌頭短三寸朝堂獨坐無人問。",
    "X72n1444_005:0800a19_3": "四海馳名天下歸。",
    "X72n1444_005:0800a19_4": "善理萬機隨意轉。",
    "X72n1444_005:0800a20_5": "龍牀憨臥許誰知。",
    "X72n1444_005:0800a21_0": "主中主。",
    "X72n1444_005:0800a21_1": "從那裏得來。",
    "X72n1444_005:0800a21_2": "師云。",
    "X72n1444_005:0800a21_3": "甞年不出戶本是深宮養聖軀。",
    "X72n1444_005:0800a22_4": "自始繇終步不移。",
    "X72n1444_005:0800a22_5": "當處湛然來去絕。",
    "X72n1444_005:0800a23_6": "欲求解會喪全機。",
    "X72n1444_005:0800a24_0": "興化悟契棒因緣",
    "X72n1444_005:0800b01_0": "觸著磕著。",
    "X72n1444_005:0800b01_1": "知痛識癢。",
    "X72n1444_005:0800b01_2": "爺死娘塟。",
    "X72n1444_005:0800b01_3": "全無伎倆。",
    "X72n1444_005:0800b02_0": "雪峰是什麼",
    "X72n1444_005:0800b03_0": "有語無語總是關。",
    "X72n1444_005:0800b03_1": "擬思量處隔千山。",
    "X72n1444_005:0800b03_2": "同生同死繇他說。",
    "X72n1444_005:0800b04_3": "漢語胡言當等閑。",
    "X72n1444_005:0800b05_0": "有句無句",
    "X72n1444_005:0800b06_0": "開口咬著舌。",
    "X72n1444_005:0800b06_1": "不待他人說。",
    "X72n1444_005:0800b06_2": "舉意便知親。",
    "X72n1444_005:0800b06_3": "活驚殺。",
    "X72n1444_005:0800b06_4": "好笑殺。",
    "X72n1444_005:0800b08_0": "道吾捺倒",
    "X72n1444_005:0800b09_0": "逐他言句覓疎親。",
    "X72n1444_005:0800b09_1": "電光石火解翻身。",
    "X72n1444_005:0800b09_2": "記得古人曾有語。",
    "X72n1444_005:0800b10_3": "不知誰是我般人。",
    "X72n1444_005:0800b11_0": "銕牛過關",
    "X72n1444_005:0800b12_0": "千斤擔子人甞放。",
    "X72n1444_005:0800b12_1": "這箇疑情脫下難。",
    "X72n1444_005:0800b12_2": "若解竿頭重進步。",
    "X72n1444_005:0800b13_3": "脫盡廉纖方始閒。",
    "X72n1444_005:0800b14_0": "華嚴上堂",
    "X72n1444_005:0800b15_0": "說過單刀直入。",
    "X72n1444_005:0800b15_1": "何緣賊來不識。",
    "X72n1444_005:0800b15_2": "若知諸法如夢。",
    "X72n1444_005:0800b15_3": "於中何有得失。",
    "X72n1444_005:0800b17_0": "鹿門問楚和尚",
    "X72n1444_005:0800b18_0": "解收不解放。",
    "X72n1444_005:0800b18_1": "就地轉身難。",
    "X72n1444_005:0800b18_2": "若識其間意。",
    "X72n1444_005:0800b18_3": "前三三與後三三。",
    "X72n1444_005:0800b20_0": "婆生七子",
    "X72n1444_005:0800b21_0": "呈橈舞棹出蘆叢。",
    "X72n1444_005:0800b21_1": "活計扁舟送順風。",
    "X72n1444_005:0800b21_2": "不識老婆何似者。",
    "X72n1444_005:0800b22_3": "聖凡直使兩無踪。",
    "X72n1444_005:0800b23_0": "疎山造塔",
    "X72n1444_005:0800b24_0": "旱地雷聲。",
    "X72n1444_005:0800b24_1": "青天霹靂。",
    "X72n1444_005:0800b24_2": "兩箇古錐。",
    "X72n1444_005:0800b24_3": "都來是賊。",
    "X72n1444_005:0800c01_0": "工部石帆岳居士室中四壁皆書太極圖。",
    "X72n1444_005:0800c01_1": "師與一頌云六九繇來別兩儀。",
    "X72n1444_005:0800c03_2": "分形設象示羣迷。",
    "X72n1444_005:0800c03_3": "爭知太極前前事。",
    "X72n1444_005:0800c04_4": "尼父猶云莫我知。",
    "X72n1444_005:0800c06_0": "會稽雲門湛然澄禪師語錄卷第五"
}