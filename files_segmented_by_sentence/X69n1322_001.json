{
    "X69n1322_001:0005c07_0": "洪州百丈山大智禪師語錄",
    "X69n1322_001:0005c09_0": "師。",
    "X69n1322_001:0005c09_1": "諱懷海。",
    "X69n1322_001:0005c09_2": "福州長樂人也。",
    "X69n1322_001:0005c09_3": "俗姓王氏。",
    "X69n1322_001:0005c09_4": "丱歲離塵。",
    "X69n1322_001:0005c09_5": "三學該練。",
    "X69n1322_001:0005c10_6": "屬大寂闡化江西。",
    "X69n1322_001:0005c10_7": "乃傾心依附。",
    "X69n1322_001:0005c10_8": "與西堂智藏南泉普願。",
    "X69n1322_001:0005c11_9": "同號入室。",
    "X69n1322_001:0005c11_10": "時三大士。",
    "X69n1322_001:0005c11_11": "為角立焉。",
    "X69n1322_001:0005c11_12": "師侍馬祖行次。",
    "X69n1322_001:0005c12_13": "見一羣野鴨飛過。",
    "X69n1322_001:0005c12_14": "祖曰。",
    "X69n1322_001:0005c12_15": "是甚麼。",
    "X69n1322_001:0005c12_16": "師曰。",
    "X69n1322_001:0005c12_17": "野鴨子。",
    "X69n1322_001:0005c12_18": "祖曰。",
    "X69n1322_001:0005c13_0": "甚處去也。",
    "X69n1322_001:0005c13_1": "師曰。",
    "X69n1322_001:0005c13_2": "飛過去也。",
    "X69n1322_001:0005c13_3": "祖遂回頭。",
    "X69n1322_001:0005c13_4": "將師鼻一搊。",
    "X69n1322_001:0005c13_5": "負痛失聲。",
    "X69n1322_001:0005c14_6": "祖曰。",
    "X69n1322_001:0005c14_7": "又道飛過去也。",
    "X69n1322_001:0005c14_8": "師於言下有省。",
    "X69n1322_001:0005c14_9": "却歸侍者寮。",
    "X69n1322_001:0005c15_10": "哀哀大哭。",
    "X69n1322_001:0005c15_11": "同事問曰。",
    "X69n1322_001:0005c15_12": "汝憶父母邪。",
    "X69n1322_001:0005c15_13": "師曰。",
    "X69n1322_001:0005c15_14": "無。",
    "X69n1322_001:0005c15_15": "曰被人罵邪。",
    "X69n1322_001:0005c16_16": "師曰。",
    "X69n1322_001:0005c16_17": "無。",
    "X69n1322_001:0005c16_18": "曰哭作甚麼。",
    "X69n1322_001:0005c16_19": "師曰。",
    "X69n1322_001:0005c16_20": "我鼻孔。",
    "X69n1322_001:0005c16_21": "被大師搊得痛不徹。",
    "X69n1322_001:0005c17_22": "同事曰。",
    "X69n1322_001:0005c17_23": "有甚因緣不契。",
    "X69n1322_001:0005c17_24": "師曰。",
    "X69n1322_001:0005c17_25": "汝問取和尚去同事問大師曰。",
    "X69n1322_001:0005c18_26": "海侍者。",
    "X69n1322_001:0005c18_27": "有何因緣不契。",
    "X69n1322_001:0005c18_28": "在寮中哭。",
    "X69n1322_001:0005c19_0": "告。",
    "X69n1322_001:0005c19_1": "和尚為某甲說。",
    "X69n1322_001:0005c19_2": "大師曰。",
    "X69n1322_001:0005c19_3": "是伊會也。",
    "X69n1322_001:0005c19_4": "汝自問取他。",
    "X69n1322_001:0005c19_5": "同事歸寮曰。",
    "X69n1322_001:0005c20_6": "和尚道。",
    "X69n1322_001:0005c20_7": "汝會也。",
    "X69n1322_001:0005c20_8": "令我自問汝。",
    "X69n1322_001:0005c20_9": "師乃呵呵大笑。",
    "X69n1322_001:0005c21_10": "同事曰。",
    "X69n1322_001:0005c21_11": "適來哭。",
    "X69n1322_001:0005c21_12": "如今為甚却笑。",
    "X69n1322_001:0005c21_13": "師曰。",
    "X69n1322_001:0005c21_14": "適來哭。",
    "X69n1322_001:0005c21_15": "如今笑。",
    "X69n1322_001:0005c22_16": "同事罔然。",
    "X69n1322_001:0005c22_17": "次日。",
    "X69n1322_001:0005c22_18": "馬祖陞堂。",
    "X69n1322_001:0005c22_19": "眾纔集。",
    "X69n1322_001:0005c22_20": "師出。",
    "X69n1322_001:0005c22_21": "卷却席。",
    "X69n1322_001:0005c22_22": "祖便下座。",
    "X69n1322_001:0005c23_23": "師隨至方丈。",
    "X69n1322_001:0005c23_24": "祖曰。",
    "X69n1322_001:0005c23_25": "我適來未曾說話。",
    "X69n1322_001:0005c23_26": "汝為甚便卷却席。",
    "X69n1322_001:0005c24_27": "師曰。",
    "X69n1322_001:0005c24_28": "昨日被和尚搊得鼻頭痛。",
    "X69n1322_001:0005c24_29": "祖曰。",
    "X69n1322_001:0005c24_30": "汝昨日向甚處留心。",
    "X69n1322_001:0006a01_31": "師曰。",
    "X69n1322_001:0006a01_32": "鼻頭今日又不痛也。",
    "X69n1322_001:0006a01_33": "祖曰。",
    "X69n1322_001:0006a01_34": "汝深明昨日事。",
    "X69n1322_001:0006a02_35": "師作禮而退。",
    "X69n1322_001:0006a02_36": "(一本。",
    "X69n1322_001:0006a02_37": "作馬祖云。",
    "X69n1322_001:0006a02_38": "你什麼處去來。",
    "X69n1322_001:0006a02_39": "昨日偶有出入。",
    "X69n1322_001:0006a02_40": "不及參隨。",
    "X69n1322_001:0006a03_0": "馬祖喝一喝。",
    "X69n1322_001:0006a03_1": "師便出去)師再參侍立次。",
    "X69n1322_001:0006a03_2": "祖。",
    "X69n1322_001:0006a03_3": "目視繩牀角拂子。",
    "X69n1322_001:0006a03_4": "師曰。",
    "X69n1322_001:0006a04_5": "即此用離此用。",
    "X69n1322_001:0006a04_6": "祖曰。",
    "X69n1322_001:0006a04_7": "汝向後開兩片皮。",
    "X69n1322_001:0006a04_8": "將何為人。",
    "X69n1322_001:0006a05_0": "師取拂子竪起。",
    "X69n1322_001:0006a05_1": "祖曰。",
    "X69n1322_001:0006a05_2": "即此用離此用。",
    "X69n1322_001:0006a05_3": "師挂拂子於舊處。",
    "X69n1322_001:0006a06_4": "祖振威一喝。",
    "X69n1322_001:0006a06_5": "師直得三日耳聾。",
    "X69n1322_001:0006a06_6": "自此雷音將震。",
    "X69n1322_001:0006a06_7": "檀信請於洪州新吳界。",
    "X69n1322_001:0006a07_8": "住大雄山。",
    "X69n1322_001:0006a07_9": "以居處巖巒峻極。",
    "X69n1322_001:0006a07_10": "故號百丈。",
    "X69n1322_001:0006a08_11": "既處之。",
    "X69n1322_001:0006a08_12": "未期朞月。",
    "X69n1322_001:0006a08_13": "參玄之賓。",
    "X69n1322_001:0006a08_14": "四方麇至。",
    "X69n1322_001:0006a08_15": "溈山黃檗當其首。",
    "X69n1322_001:0006a10_0": "黃檗到師處。",
    "X69n1322_001:0006a10_1": "一日辭云。",
    "X69n1322_001:0006a10_2": "欲禮拜馬祖去。",
    "X69n1322_001:0006a10_3": "師云。",
    "X69n1322_001:0006a10_4": "馬祖已遷化也。",
    "X69n1322_001:0006a11_5": "檗云。",
    "X69n1322_001:0006a11_6": "未審。",
    "X69n1322_001:0006a11_7": "馬祖有何言句。",
    "X69n1322_001:0006a11_8": "師遂舉再參馬祖竪拂因緣言。",
    "X69n1322_001:0006a12_9": "佛法不是小事。",
    "X69n1322_001:0006a12_10": "老僧當時被因馬大師一喝。",
    "X69n1322_001:0006a13_11": "直得三日耳聾。",
    "X69n1322_001:0006a13_12": "檗聞舉。",
    "X69n1322_001:0006a13_13": "不覺吐舌。",
    "X69n1322_001:0006a13_14": "師云。",
    "X69n1322_001:0006a13_15": "子已後莫承嗣馬祖去麼。",
    "X69n1322_001:0006a14_16": "檗云。",
    "X69n1322_001:0006a14_17": "不然。",
    "X69n1322_001:0006a14_18": "今日因師舉。",
    "X69n1322_001:0006a14_19": "得見馬祖大機之用。",
    "X69n1322_001:0006a15_20": "然且不識馬祖。",
    "X69n1322_001:0006a15_21": "若嗣馬祖。",
    "X69n1322_001:0006a15_22": "已後喪我兒孫。",
    "X69n1322_001:0006a16_0": "師曰。",
    "X69n1322_001:0006a16_1": "如是如是。",
    "X69n1322_001:0006a16_2": "見與師齊。",
    "X69n1322_001:0006a16_3": "減師半德。",
    "X69n1322_001:0006a16_4": "見過於師。",
    "X69n1322_001:0006a16_5": "方堪傳授。",
    "X69n1322_001:0006a17_6": "子甚有超師之見。",
    "X69n1322_001:0006a17_7": "後溈山問仰山。",
    "X69n1322_001:0006a17_8": "百丈再參馬祖竪拂因緣。",
    "X69n1322_001:0006a18_9": "此二尊宿意旨如何。",
    "X69n1322_001:0006a18_10": "仰山云。",
    "X69n1322_001:0006a18_11": "此是顯大機之用。",
    "X69n1322_001:0006a19_12": "溈山云。",
    "X69n1322_001:0006a19_13": "馬祖出八十四人善知識。",
    "X69n1322_001:0006a19_14": "幾人得大機。",
    "X69n1322_001:0006a20_15": "幾人得大用。",
    "X69n1322_001:0006a20_16": "仰山云。",
    "X69n1322_001:0006a20_17": "百丈得大機。",
    "X69n1322_001:0006a20_18": "黃檗得大用。",
    "X69n1322_001:0006a20_19": "餘者。",
    "X69n1322_001:0006a21_20": "盡是唱道之師。",
    "X69n1322_001:0006a21_21": "溈山云。",
    "X69n1322_001:0006a21_22": "如是如是。",
    "X69n1322_001:0006a22_0": "馬祖一日問師。",
    "X69n1322_001:0006a22_1": "甚麼處來。",
    "X69n1322_001:0006a22_2": "師云。",
    "X69n1322_001:0006a22_3": "山後來。",
    "X69n1322_001:0006a22_4": "祖云。",
    "X69n1322_001:0006a22_5": "還逢著一人麼。",
    "X69n1322_001:0006a23_6": "師云。",
    "X69n1322_001:0006a23_7": "不逢著。",
    "X69n1322_001:0006a23_8": "祖云。",
    "X69n1322_001:0006a23_9": "為甚麼不逢著。",
    "X69n1322_001:0006a23_10": "師云。",
    "X69n1322_001:0006a23_11": "若逢着。",
    "X69n1322_001:0006a24_12": "即舉似和尚。",
    "X69n1322_001:0006a24_13": "祖云。",
    "X69n1322_001:0006a24_14": "甚麼處。",
    "X69n1322_001:0006a24_15": "得這箇消息來。",
    "X69n1322_001:0006a24_16": "師云。",
    "X69n1322_001:0006a24_17": "某甲罪過。",
    "X69n1322_001:0006b01_18": "祖云。",
    "X69n1322_001:0006b01_19": "却是老僧罪過。",
    "X69n1322_001:0006b02_0": "上堂云。",
    "X69n1322_001:0006b02_1": "靈光獨耀。",
    "X69n1322_001:0006b02_2": "迥脫根塵。",
    "X69n1322_001:0006b02_3": "體露真常。",
    "X69n1322_001:0006b02_4": "不拘文字。",
    "X69n1322_001:0006b02_5": "心性無染。",
    "X69n1322_001:0006b03_6": "本自圓成。",
    "X69n1322_001:0006b03_7": "但離妄緣。",
    "X69n1322_001:0006b03_8": "即如如佛。",
    "X69n1322_001:0006b04_0": "問。",
    "X69n1322_001:0006b04_1": "如何是奇特事。",
    "X69n1322_001:0006b04_2": "師云。",
    "X69n1322_001:0006b04_3": "獨坐大雄山。",
    "X69n1322_001:0006b04_4": "僧禮拜。",
    "X69n1322_001:0006b04_5": "師便打。",
    "X69n1322_001:0006b05_0": "西堂問師。",
    "X69n1322_001:0006b05_1": "你向後作麼生開示於人。",
    "X69n1322_001:0006b05_2": "師以手卷舒兩過。",
    "X69n1322_001:0006b06_3": "堂云。",
    "X69n1322_001:0006b06_4": "更作麼生。",
    "X69n1322_001:0006b06_5": "師以手點頭三下。",
    "X69n1322_001:0006b07_0": "馬祖。",
    "X69n1322_001:0006b07_1": "令人持書。",
    "X69n1322_001:0006b07_2": "并醬三甕與師。",
    "X69n1322_001:0006b07_3": "師令排向法堂前。",
    "X69n1322_001:0006b07_4": "乃上堂。",
    "X69n1322_001:0006b08_5": "眾纔集。",
    "X69n1322_001:0006b08_6": "師以拄杖指醬甕云。",
    "X69n1322_001:0006b08_7": "道得即不打破。",
    "X69n1322_001:0006b08_8": "道不得即打破。",
    "X69n1322_001:0006b09_9": "眾無語。",
    "X69n1322_001:0006b09_10": "師便打破。",
    "X69n1322_001:0006b09_11": "歸方丈。",
    "X69n1322_001:0006b10_0": "有一僧哭入法堂。",
    "X69n1322_001:0006b10_1": "師云。",
    "X69n1322_001:0006b10_2": "作什麼。",
    "X69n1322_001:0006b10_3": "僧云。",
    "X69n1322_001:0006b10_4": "父母俱喪。",
    "X69n1322_001:0006b10_5": "請師揀日。",
    "X69n1322_001:0006b11_6": "師云。",
    "X69n1322_001:0006b11_7": "明日一時埋却。",
    "X69n1322_001:0006b12_0": "問。",
    "X69n1322_001:0006b12_1": "依經解義。",
    "X69n1322_001:0006b12_2": "三世佛冤。",
    "X69n1322_001:0006b12_3": "離經一字。",
    "X69n1322_001:0006b12_4": "如同魔說時如何。",
    "X69n1322_001:0006b13_0": "師云。",
    "X69n1322_001:0006b13_1": "固守動靜。",
    "X69n1322_001:0006b13_2": "三世佛冤。",
    "X69n1322_001:0006b13_3": "此外別求。",
    "X69n1322_001:0006b13_4": "如同魔說。",
    "X69n1322_001:0006b14_0": "師有時說法竟。",
    "X69n1322_001:0006b14_1": "大眾下堂。",
    "X69n1322_001:0006b14_2": "乃召之。",
    "X69n1322_001:0006b14_3": "大眾回首。",
    "X69n1322_001:0006b14_4": "師云。",
    "X69n1322_001:0006b14_5": "是甚麼。",
    "X69n1322_001:0006b16_0": "師因普請開田回。",
    "X69n1322_001:0006b16_1": "問運闍棃。",
    "X69n1322_001:0006b16_2": "開田不易。",
    "X69n1322_001:0006b16_3": "檗云。",
    "X69n1322_001:0006b16_4": "眾僧作務。",
    "X69n1322_001:0006b17_5": "師云。",
    "X69n1322_001:0006b17_6": "有煩道用。",
    "X69n1322_001:0006b17_7": "檗云。",
    "X69n1322_001:0006b17_8": "爭敢辭勞。",
    "X69n1322_001:0006b17_9": "師云。",
    "X69n1322_001:0006b17_10": "開得多少田。",
    "X69n1322_001:0006b18_0": "檗作鋤田勢。",
    "X69n1322_001:0006b18_1": "師便喝。",
    "X69n1322_001:0006b18_2": "檗掩耳而出。",
    "X69n1322_001:0006b19_0": "師問黃檗。",
    "X69n1322_001:0006b19_1": "甚處來。",
    "X69n1322_001:0006b19_2": "檗云。",
    "X69n1322_001:0006b19_3": "山下採菌子來。",
    "X69n1322_001:0006b19_4": "師云。",
    "X69n1322_001:0006b19_5": "山下有一虎子。",
    "X69n1322_001:0006b20_6": "汝還見麼。",
    "X69n1322_001:0006b20_7": "檗便作虎聲。",
    "X69n1322_001:0006b20_8": "師於腰下取斧。",
    "X69n1322_001:0006b20_9": "作斫勢。",
    "X69n1322_001:0006b21_10": "檗約住便掌。",
    "X69n1322_001:0006b21_11": "師至晚上堂云。",
    "X69n1322_001:0006b21_12": "大眾。",
    "X69n1322_001:0006b21_13": "山下有一虎子。",
    "X69n1322_001:0006b22_0": "汝等諸人。",
    "X69n1322_001:0006b22_1": "出入好看。",
    "X69n1322_001:0006b22_2": "老僧今朝親遭一口。",
    "X69n1322_001:0006b22_3": "後溈山問仰山。",
    "X69n1322_001:0006b23_4": "黃檗虎話作麼生。",
    "X69n1322_001:0006b23_5": "仰山云。",
    "X69n1322_001:0006b23_6": "和尚如何。",
    "X69n1322_001:0006b23_7": "溈山云。",
    "X69n1322_001:0006b23_8": "百丈當時便合一斧斫殺。",
    "X69n1322_001:0006b24_9": "因什麼到如此。",
    "X69n1322_001:0006b24_10": "仰山云。",
    "X69n1322_001:0006b24_11": "不然。",
    "X69n1322_001:0006c01_0": "溈山云。",
    "X69n1322_001:0006c01_1": "子又作麼生。",
    "X69n1322_001:0006c01_2": "仰山云。",
    "X69n1322_001:0006c01_3": "不唯騎虎頭。",
    "X69n1322_001:0006c01_4": "亦解把虎尾。",
    "X69n1322_001:0006c02_5": "溈山云。",
    "X69n1322_001:0006c02_6": "寂子。",
    "X69n1322_001:0006c02_7": "甚有險崖之句。",
    "X69n1322_001:0006c03_0": "師每日上堂。",
    "X69n1322_001:0006c03_1": "常有一老人聽法。",
    "X69n1322_001:0006c03_2": "隨眾散去。",
    "X69n1322_001:0006c03_3": "一日不去。",
    "X69n1322_001:0006c04_0": "師乃問。",
    "X69n1322_001:0006c04_1": "立者何人。",
    "X69n1322_001:0006c04_2": "老人云。",
    "X69n1322_001:0006c04_3": "某甲於過去迦葉佛時。",
    "X69n1322_001:0006c04_4": "曾住此山。",
    "X69n1322_001:0006c05_5": "有學人問。",
    "X69n1322_001:0006c05_6": "大修行底人。",
    "X69n1322_001:0006c05_7": "還落因果也無。",
    "X69n1322_001:0006c05_8": "對云。",
    "X69n1322_001:0006c06_0": "不落因果。",
    "X69n1322_001:0006c06_1": "墮在野狐身。",
    "X69n1322_001:0006c06_2": "今請和尚代一轉語。",
    "X69n1322_001:0006c06_3": "師云。",
    "X69n1322_001:0006c06_4": "汝但問。",
    "X69n1322_001:0006c07_5": "老人便問。",
    "X69n1322_001:0006c07_6": "大修行底人。",
    "X69n1322_001:0006c07_7": "還落因果也無。",
    "X69n1322_001:0006c07_8": "師云。",
    "X69n1322_001:0006c07_9": "不昧因果。",
    "X69n1322_001:0006c08_10": "老人於言下大悟。",
    "X69n1322_001:0006c08_11": "告辭師云。",
    "X69n1322_001:0006c08_12": "某甲已免野狐身。",
    "X69n1322_001:0006c09_13": "住在山後。",
    "X69n1322_001:0006c09_14": "乞依亡僧燒送。",
    "X69n1322_001:0006c09_15": "師令維那白槌告眾。",
    "X69n1322_001:0006c09_16": "齋後普請送亡僧。",
    "X69n1322_001:0006c10_17": "大眾不能詳。",
    "X69n1322_001:0006c10_18": "師領眾至山後巖下。",
    "X69n1322_001:0006c10_19": "以杖挑出一死狐。",
    "X69n1322_001:0006c11_20": "乃依法火葬。",
    "X69n1322_001:0006c11_21": "至晚參。",
    "X69n1322_001:0006c11_22": "師舉前因緣次。",
    "X69n1322_001:0006c12_0": "黃檗便問。",
    "X69n1322_001:0006c12_1": "古人錯對一轉語。",
    "X69n1322_001:0006c12_2": "落在野狐身。",
    "X69n1322_001:0006c12_3": "今日轉轉不錯是如何。",
    "X69n1322_001:0006c13_4": "師云。",
    "X69n1322_001:0006c13_5": "近前來。",
    "X69n1322_001:0006c13_6": "向汝道。",
    "X69n1322_001:0006c13_7": "黃檗近前。",
    "X69n1322_001:0006c13_8": "打師一掌。",
    "X69n1322_001:0006c14_9": "師拍手笑云。",
    "X69n1322_001:0006c14_10": "將謂胡鬚赤。",
    "X69n1322_001:0006c14_11": "更有赤鬚胡。",
    "X69n1322_001:0006c14_12": "時溈山在會下作典座。",
    "X69n1322_001:0006c15_13": "司馬頭陀。",
    "X69n1322_001:0006c15_14": "舉野狐話問。",
    "X69n1322_001:0006c15_15": "典座作麼生。",
    "X69n1322_001:0006c15_16": "典座。",
    "X69n1322_001:0006c16_17": "以手撼門扇三下。",
    "X69n1322_001:0006c16_18": "司馬云。",
    "X69n1322_001:0006c16_19": "太麤生。",
    "X69n1322_001:0006c16_20": "典座云。",
    "X69n1322_001:0006c16_21": "佛法不是這箇道理。",
    "X69n1322_001:0006c17_22": "後溈山舉黃檗問野狐話。",
    "X69n1322_001:0006c17_23": "問仰山。",
    "X69n1322_001:0006c17_24": "仰山云。",
    "X69n1322_001:0006c18_25": "黃檗常用此機。",
    "X69n1322_001:0006c18_26": "溈山云。",
    "X69n1322_001:0006c18_27": "汝道。",
    "X69n1322_001:0006c18_28": "天生得。",
    "X69n1322_001:0006c18_29": "從人得。",
    "X69n1322_001:0006c18_30": "仰山云。",
    "X69n1322_001:0006c19_31": "亦是稟受師承。",
    "X69n1322_001:0006c19_32": "亦是自宗通。",
    "X69n1322_001:0006c19_33": "溈山云。",
    "X69n1322_001:0006c19_34": "如是如是。",
    "X69n1322_001:0006c20_0": "黃檗問。",
    "X69n1322_001:0006c20_1": "從上古人。",
    "X69n1322_001:0006c20_2": "以何法施人。",
    "X69n1322_001:0006c20_3": "師良久未語。",
    "X69n1322_001:0006c20_4": "黃檗云。",
    "X69n1322_001:0006c21_0": "後代兒孫。",
    "X69n1322_001:0006c21_1": "將何傳授。",
    "X69n1322_001:0006c21_2": "師云。",
    "X69n1322_001:0006c21_3": "將謂你這漢是箇人。",
    "X69n1322_001:0006c21_4": "便歸方丈。",
    "X69n1322_001:0006c23_0": "師與溈山作務次。",
    "X69n1322_001:0006c23_1": "師問。",
    "X69n1322_001:0006c23_2": "有火也無。",
    "X69n1322_001:0006c23_3": "溈山云。",
    "X69n1322_001:0006c23_4": "有。",
    "X69n1322_001:0006c23_5": "師云。",
    "X69n1322_001:0006c23_6": "在什麼處。",
    "X69n1322_001:0006c24_7": "溈山把一莖柴。",
    "X69n1322_001:0006c24_8": "吹過與師。",
    "X69n1322_001:0006c24_9": "師接過云。",
    "X69n1322_001:0006c24_10": "如蟲蝕木。",
    "X69n1322_001:0007a02_0": "因普請鋤地次。",
    "X69n1322_001:0007a02_1": "有僧。",
    "X69n1322_001:0007a02_2": "聞鼓聲。",
    "X69n1322_001:0007a02_3": "舉起鋤頭。",
    "X69n1322_001:0007a02_4": "大笑歸去。",
    "X69n1322_001:0007a02_5": "師云。",
    "X69n1322_001:0007a03_6": "俊哉。",
    "X69n1322_001:0007a03_7": "此是觀音入理之門。",
    "X69n1322_001:0007a03_8": "後喚其僧問。",
    "X69n1322_001:0007a03_9": "你今日見甚道理。",
    "X69n1322_001:0007a04_10": "云某甲早晨未喫粥。",
    "X69n1322_001:0007a04_11": "聞鼓聲歸喫飯。",
    "X69n1322_001:0007a04_12": "師乃呵呵大笑。",
    "X69n1322_001:0007a06_0": "問。",
    "X69n1322_001:0007a06_1": "如何是佛。",
    "X69n1322_001:0007a06_2": "師云。",
    "X69n1322_001:0007a06_3": "汝是阿誰。",
    "X69n1322_001:0007a06_4": "云某甲。",
    "X69n1322_001:0007a06_5": "師云。",
    "X69n1322_001:0007a06_6": "汝識某甲否。",
    "X69n1322_001:0007a07_7": "云分明箇。",
    "X69n1322_001:0007a07_8": "師竪起拂子問。",
    "X69n1322_001:0007a07_9": "汝見拂子否。",
    "X69n1322_001:0007a07_10": "云見。",
    "X69n1322_001:0007a07_11": "師乃不語。",
    "X69n1322_001:0007a09_0": "師。",
    "X69n1322_001:0007a09_1": "令僧去章敬處。",
    "X69n1322_001:0007a09_2": "見伊上堂說法。",
    "X69n1322_001:0007a09_3": "你便展開坐具禮拜。",
    "X69n1322_001:0007a10_4": "起將一隻鞋。",
    "X69n1322_001:0007a10_5": "以袖拂却上塵。",
    "X69n1322_001:0007a10_6": "倒頭覆下。",
    "X69n1322_001:0007a10_7": "其僧到章敬。",
    "X69n1322_001:0007a11_8": "一依師旨。",
    "X69n1322_001:0007a11_9": "章敬云。",
    "X69n1322_001:0007a11_10": "老僧罪過。",
    "X69n1322_001:0007a12_0": "溈山五峯雲巖侍立次。",
    "X69n1322_001:0007a12_1": "師問溈山。",
    "X69n1322_001:0007a12_2": "併却咽喉脣吻。",
    "X69n1322_001:0007a12_3": "速道將來。",
    "X69n1322_001:0007a13_4": "溈山云。",
    "X69n1322_001:0007a13_5": "某甲道不得。",
    "X69n1322_001:0007a13_6": "請和尚道。",
    "X69n1322_001:0007a13_7": "師曰。",
    "X69n1322_001:0007a13_8": "不辭向汝道。",
    "X69n1322_001:0007a14_9": "恐已後喪我兒孫。",
    "X69n1322_001:0007a14_10": "又問五峯。",
    "X69n1322_001:0007a14_11": "峯云。",
    "X69n1322_001:0007a14_12": "和尚亦須併却。",
    "X69n1322_001:0007a15_13": "師云。",
    "X69n1322_001:0007a15_14": "無人處斫額望汝。",
    "X69n1322_001:0007a15_15": "又問雲巖。",
    "X69n1322_001:0007a15_16": "巖云。",
    "X69n1322_001:0007a15_17": "某甲有道處。",
    "X69n1322_001:0007a16_18": "請和尚舉。",
    "X69n1322_001:0007a16_19": "師云。",
    "X69n1322_001:0007a16_20": "併却咽喉脣吻。",
    "X69n1322_001:0007a16_21": "速道將來。",
    "X69n1322_001:0007a16_22": "巖云。",
    "X69n1322_001:0007a16_23": "師今有也未。",
    "X69n1322_001:0007a17_24": "師云。",
    "X69n1322_001:0007a17_25": "喪兒孫。",
    "X69n1322_001:0007a18_0": "上堂。",
    "X69n1322_001:0007a18_1": "謂眾云。",
    "X69n1322_001:0007a18_2": "我要一人去。",
    "X69n1322_001:0007a18_3": "傳語西堂和尚。",
    "X69n1322_001:0007a18_4": "阿誰去得。",
    "X69n1322_001:0007a19_0": "五峯云。",
    "X69n1322_001:0007a19_1": "某甲去得。",
    "X69n1322_001:0007a19_2": "師云。",
    "X69n1322_001:0007a19_3": "汝作麼生傳語。",
    "X69n1322_001:0007a19_4": "峯云。",
    "X69n1322_001:0007a19_5": "待見西堂即道。",
    "X69n1322_001:0007a20_6": "師云。",
    "X69n1322_001:0007a20_7": "見後道什麼。",
    "X69n1322_001:0007a20_8": "峯云。",
    "X69n1322_001:0007a20_9": "却來舉似和尚。",
    "X69n1322_001:0007a21_0": "因僧問西堂。",
    "X69n1322_001:0007a21_1": "有問有答。",
    "X69n1322_001:0007a21_2": "即且置。",
    "X69n1322_001:0007a21_3": "無問無答時如何。",
    "X69n1322_001:0007a21_4": "堂云。",
    "X69n1322_001:0007a22_5": "怕爛却那。",
    "X69n1322_001:0007a22_6": "師聞舉。",
    "X69n1322_001:0007a22_7": "乃曰。",
    "X69n1322_001:0007a22_8": "從來疑這箇老兄。",
    "X69n1322_001:0007a22_9": "云請和尚道。",
    "X69n1322_001:0007a23_10": "師曰。",
    "X69n1322_001:0007a23_11": "一合相不可得。",
    "X69n1322_001:0007a24_0": "師謂眾曰。",
    "X69n1322_001:0007a24_1": "有一人。",
    "X69n1322_001:0007a24_2": "長不喫飯不道饑。",
    "X69n1322_001:0007a24_3": "有一人。",
    "X69n1322_001:0007a24_4": "終日喫飯不道飽。",
    "X69n1322_001:0007b01_5": "眾無對。",
    "X69n1322_001:0007b02_0": "雲巖問。",
    "X69n1322_001:0007b02_1": "和尚。",
    "X69n1322_001:0007b02_2": "每日區區為阿誰。",
    "X69n1322_001:0007b02_3": "師曰。",
    "X69n1322_001:0007b02_4": "有一人要。",
    "X69n1322_001:0007b02_5": "巖云。",
    "X69n1322_001:0007b03_0": "因什麼不教伊自作。",
    "X69n1322_001:0007b03_1": "師曰。",
    "X69n1322_001:0007b03_2": "他無家活。",
    "X69n1322_001:0007b04_0": "師。",
    "X69n1322_001:0007b04_1": "童年之時。",
    "X69n1322_001:0007b04_2": "隨母入寺拜佛。",
    "X69n1322_001:0007b04_3": "指尊像問母。",
    "X69n1322_001:0007b04_4": "此是何物。",
    "X69n1322_001:0007b05_0": "母云。",
    "X69n1322_001:0007b05_1": "是佛。",
    "X69n1322_001:0007b05_2": "童云。",
    "X69n1322_001:0007b05_3": "形容似人無異。",
    "X69n1322_001:0007b05_4": "我後亦當作焉。",
    "X69n1322_001:0007b06_0": "師。",
    "X69n1322_001:0007b06_1": "凡作務執勞。",
    "X69n1322_001:0007b06_2": "必先於眾。",
    "X69n1322_001:0007b06_3": "眾皆不忍。",
    "X69n1322_001:0007b06_4": "蚤收作具。",
    "X69n1322_001:0007b06_5": "而請息之。",
    "X69n1322_001:0007b07_6": "師云。",
    "X69n1322_001:0007b07_7": "吾無德。",
    "X69n1322_001:0007b07_8": "爭合勞於人。",
    "X69n1322_001:0007b07_9": "師既徧求作具不獲。",
    "X69n1322_001:0007b08_0": "而亦忘食。",
    "X69n1322_001:0007b08_1": "故有一日不作一日不食之言。",
    "X69n1322_001:0007b08_2": "流播寰宇矣。",
    "X69n1322_001:0007b09_3": "師於唐元和九年正月十七日示寂。",
    "X69n1322_001:0007b09_4": "春秋九十五。",
    "X69n1322_001:0007b10_0": "長慶元年。",
    "X69n1322_001:0007b10_1": "勅諡大智禪師。",
    "X69n1322_001:0007b10_2": "塔曰大勝寶輪。",
    "X69n1322_001:0007b12_0": "洪州百丈山大智禪師語錄"
}