{
    "T21n1262_001:0290c03_0": "佛說鬼子母經",
    "T21n1262_001:0290c05_0": "失譯人今附西晉錄",
    "T21n1262_001:0290c06_0": "佛遊大兜國。",
    "T21n1262_001:0290c06_1": "時國中有一母人。",
    "T21n1262_001:0290c06_2": "多子性極惡。",
    "T21n1262_001:0290c07_0": "常喜行盜人子殺噉之。",
    "T21n1262_001:0290c07_1": "亡子家亦不知何誰取者。",
    "T21n1262_001:0290c08_2": "行街里啼哭。",
    "T21n1262_001:0290c08_3": "人已還共議。",
    "T21n1262_001:0290c08_4": "如是非一日。",
    "T21n1262_001:0290c09_5": "阿難及眾沙門。",
    "T21n1262_001:0290c09_6": "出行輒見啼哭人。",
    "T21n1262_001:0290c09_7": "已還共議。",
    "T21n1262_001:0290c10_8": "傷哀亡子家。",
    "T21n1262_001:0290c10_9": "佛即知眾沙門議。",
    "T21n1262_001:0290c10_10": "佛到眾沙門所。",
    "T21n1262_001:0290c11_11": "佛問眾沙門。",
    "T21n1262_001:0290c11_12": "向者何等議眾沙門。",
    "T21n1262_001:0290c11_13": "阿難白佛言。",
    "T21n1262_001:0290c12_14": "向者出行分衛。",
    "T21n1262_001:0290c12_15": "見街里有啼哭人眾多。",
    "T21n1262_001:0290c13_16": "即問啼哭人。",
    "T21n1262_001:0290c13_17": "汝何為啼哭。",
    "T21n1262_001:0290c13_18": "報言。",
    "T21n1262_001:0290c13_19": "生亡我子。",
    "T21n1262_001:0290c14_20": "不知屍死處所。",
    "T21n1262_001:0290c14_21": "如是啼哭者非一家皆亡子。",
    "T21n1262_001:0290c15_22": "佛便為阿難眾沙門說。",
    "T21n1262_001:0290c15_23": "是國中盜人子者。",
    "T21n1262_001:0290c16_0": "非凡人故。",
    "T21n1262_001:0290c16_1": "現鬼子母。",
    "T21n1262_001:0290c16_2": "今生作人。",
    "T21n1262_001:0290c16_3": "喜行盜人子。",
    "T21n1262_001:0290c17_0": "是母有千子。",
    "T21n1262_001:0290c17_1": "五百子在天上。",
    "T21n1262_001:0290c17_2": "五百子在世間。",
    "T21n1262_001:0290c18_0": "千子皆為鬼王。",
    "T21n1262_001:0290c18_1": "一王者從數萬鬼。",
    "T21n1262_001:0290c18_2": "如是五百鬼王。",
    "T21n1262_001:0290c19_3": "在天上嬈諸天。",
    "T21n1262_001:0290c19_4": "五百鬼王。",
    "T21n1262_001:0290c19_5": "在世間嬈帝王人民如是。",
    "T21n1262_001:0290c20_6": "五百鬼王。",
    "T21n1262_001:0290c20_7": "天亦無奈何。",
    "T21n1262_001:0290c20_8": "阿難白佛言。",
    "T21n1262_001:0290c21_9": "鬼子母來在是國中。",
    "T21n1262_001:0290c21_10": "今寧可勅令不盜人子耶。",
    "T21n1262_001:0290c22_11": "佛言大善。",
    "T21n1262_001:0290c22_12": "可令不復盜人子。",
    "T21n1262_001:0290c22_13": "阿難問佛言。",
    "T21n1262_001:0290c23_14": "當用何等方便。",
    "T21n1262_001:0290c23_15": "使不復盜人子耶。",
    "T21n1262_001:0290c23_16": "佛便語阿難。",
    "T21n1262_001:0290c24_17": "到是母所居。",
    "T21n1262_001:0290c24_18": "眾沙門共伺是母出已。",
    "T21n1262_001:0290c25_0": "後悉歛取子。",
    "T21n1262_001:0290c25_1": "來著精舍中逃之。",
    "T21n1262_001:0290c25_2": "眾沙門即往。",
    "T21n1262_001:0290c26_0": "伺是母出行。",
    "T21n1262_001:0290c26_1": "隨後歛取子。",
    "T21n1262_001:0290c26_2": "得千數子。",
    "T21n1262_001:0290c26_3": "逃著精舍中。",
    "T21n1262_001:0290c27_4": "是母便復行盜人子。",
    "T21n1262_001:0290c27_5": "來入舍中。",
    "T21n1262_001:0290c27_6": "不見其子。",
    "T21n1262_001:0290c28_7": "便捨他人子。",
    "T21n1262_001:0290c28_8": "不敢復殺。",
    "T21n1262_001:0290c28_9": "便行索其子。",
    "T21n1262_001:0290c29_0": "遍舍中不知其子處。",
    "T21n1262_001:0290c29_1": "便出行至街里遍城中不得。",
    "T21n1262_001:0291a01_2": "復出城外索不得。",
    "T21n1262_001:0291a01_3": "便入城行道啼哭。",
    "T21n1262_001:0291a01_4": "如是十日。",
    "T21n1262_001:0291a02_5": "母便狂。",
    "T21n1262_001:0291a02_6": "被髮入市。",
    "T21n1262_001:0291a02_7": "啼哭自擗撲仰天。",
    "T21n1262_001:0291a03_8": "大呼為狂梁語。",
    "T21n1262_001:0291a03_9": "亦不能復飲食。",
    "T21n1262_001:0291a03_10": "佛遣沙門。",
    "T21n1262_001:0291a04_0": "往視之。",
    "T21n1262_001:0291a04_1": "見母問。",
    "T21n1262_001:0291a04_2": "何為市中被髮啼哭。",
    "T21n1262_001:0291a04_3": "母即報沙門言。",
    "T21n1262_001:0291a05_4": "亡我子眾多故哭耳。",
    "T21n1262_001:0291a05_5": "沙門言。",
    "T21n1262_001:0291a05_6": "汝欲得汝子不。",
    "T21n1262_001:0291a06_7": "母報言。",
    "T21n1262_001:0291a06_8": "我欲得之。",
    "T21n1262_001:0291a06_9": "沙門言。",
    "T21n1262_001:0291a06_10": "汝審欲得者。",
    "T21n1262_001:0291a07_11": "是間有佛。",
    "T21n1262_001:0291a07_12": "可往問佛。",
    "T21n1262_001:0291a07_13": "佛者知當來已去之事。",
    "T21n1262_001:0291a08_14": "汝往則可得汝子。",
    "T21n1262_001:0291a08_15": "母聞是語則歡喜意解便隨沙門。",
    "T21n1262_001:0291a09_16": "去到佛所。",
    "T21n1262_001:0291a09_17": "歡喜前為佛作禮。",
    "T21n1262_001:0291a09_18": "佛即問母。",
    "T21n1262_001:0291a10_19": "何為市中啼哭。",
    "T21n1262_001:0291a10_20": "母報佛言。",
    "T21n1262_001:0291a10_21": "亡我子故。",
    "T21n1262_001:0291a11_0": "佛問母。",
    "T21n1262_001:0291a11_1": "汝捨汝子至何所而亡汝子。",
    "T21n1262_001:0291a11_2": "母即默然不言。",
    "T21n1262_001:0291a12_3": "佛復問母。",
    "T21n1262_001:0291a12_4": "汝捨子至何所而反。",
    "T21n1262_001:0291a12_5": "默然無語。",
    "T21n1262_001:0291a13_6": "母知盜人子為惡。",
    "T21n1262_001:0291a13_7": "母即起為佛作禮。",
    "T21n1262_001:0291a13_8": "頭面著地。",
    "T21n1262_001:0291a14_9": "我愚癡故。",
    "T21n1262_001:0291a14_10": "佛復問。",
    "T21n1262_001:0291a14_11": "汝有子愛之不。",
    "T21n1262_001:0291a14_12": "母言。",
    "T21n1262_001:0291a15_13": "我有子坐起常欲著我傍。",
    "T21n1262_001:0291a15_14": "佛復問。",
    "T21n1262_001:0291a15_15": "汝有子知愛之。",
    "T21n1262_001:0291a16_16": "何故日行盜他人子。",
    "T21n1262_001:0291a16_17": "他人有子。",
    "T21n1262_001:0291a16_18": "亦如汝愛之。",
    "T21n1262_001:0291a17_19": "亡子家。",
    "T21n1262_001:0291a17_20": "亦行道啼哭如汝。",
    "T21n1262_001:0291a17_21": "汝反盜人子殺噉之。",
    "T21n1262_001:0291a18_22": "死後當入太山地獄中。",
    "T21n1262_001:0291a18_23": "母聞是語。",
    "T21n1262_001:0291a19_0": "便恐怖。",
    "T21n1262_001:0291a19_1": "佛復問。",
    "T21n1262_001:0291a19_2": "汝寧欲得汝子不。",
    "T21n1262_001:0291a19_3": "母即起復持頭面著地。",
    "T21n1262_001:0291a20_4": "願哀我。",
    "T21n1262_001:0291a20_5": "佛便語母言。",
    "T21n1262_001:0291a20_6": "汝子若在。",
    "T21n1262_001:0291a21_7": "汝寧能自悔不。",
    "T21n1262_001:0291a21_8": "若能自悔。",
    "T21n1262_001:0291a21_9": "當還汝子。",
    "T21n1262_001:0291a21_10": "母言。",
    "T21n1262_001:0291a22_11": "我能自悔。",
    "T21n1262_001:0291a22_12": "佛言。",
    "T21n1262_001:0291a22_13": "汝能自悔。",
    "T21n1262_001:0291a22_14": "當作何等自悔。",
    "T21n1262_001:0291a23_15": "母言。",
    "T21n1262_001:0291a23_16": "我聽佛教誡。",
    "T21n1262_001:0291a23_17": "當隨佛語自悔。",
    "T21n1262_001:0291a23_18": "佛還我子。",
    "T21n1262_001:0291a24_19": "我不敢遠離佛所語。",
    "T21n1262_001:0291a24_20": "佛言。",
    "T21n1262_001:0291a24_21": "審如汝語不。",
    "T21n1262_001:0291a25_22": "母言。",
    "T21n1262_001:0291a25_23": "我審如佛語。",
    "T21n1262_001:0291a25_24": "佛便授以五戒。",
    "T21n1262_001:0291a25_25": "第一不殺生。",
    "T21n1262_001:0291a26_26": "第二不盜。",
    "T21n1262_001:0291a26_27": "三不婬。",
    "T21n1262_001:0291a26_28": "四不兩舌。",
    "T21n1262_001:0291a26_29": "五不飲酒。",
    "T21n1262_001:0291a27_30": "報能悉還其子。",
    "T21n1262_001:0291a27_31": "佛便為說汝有千子。",
    "T21n1262_001:0291a28_32": "皆為說千子名字。",
    "T21n1262_001:0291a28_33": "五百子在天上。",
    "T21n1262_001:0291a28_34": "皆是鬼中王。",
    "T21n1262_001:0291a29_35": "將鬼官屬。",
    "T21n1262_001:0291a29_36": "嫉害嬈天民。",
    "T21n1262_001:0291a29_37": "五百子在世間。",
    "T21n1262_001:0291b01_38": "嬈諸人民。",
    "T21n1262_001:0291b01_39": "汝子作鬼王。",
    "T21n1262_001:0291b01_40": "將數萬鬼。",
    "T21n1262_001:0291b02_41": "如是五百子。",
    "T21n1262_001:0291b02_42": "將鬼官屬。",
    "T21n1262_001:0291b02_43": "一不可稱數。",
    "T21n1262_001:0291b02_44": "極嫉害惡。",
    "T21n1262_001:0291b03_45": "或自稱作樹木神者。",
    "T21n1262_001:0291b03_46": "或作地神者。",
    "T21n1262_001:0291b03_47": "或作水神者。",
    "T21n1262_001:0291b04_48": "或詐為人兄弟妻子。",
    "T21n1262_001:0291b04_49": "自怨枉家室內外者。",
    "T21n1262_001:0291b05_50": "或作海神者。",
    "T21n1262_001:0291b05_51": "或作船車神者。",
    "T21n1262_001:0291b05_52": "或作舍宅神者。",
    "T21n1262_001:0291b06_53": "或自稱夜在冥中神者。",
    "T21n1262_001:0291b06_54": "或使人夢寤者。",
    "T21n1262_001:0291b07_0": "或使人恐怖。",
    "T21n1262_001:0291b07_1": "為人作怪者。",
    "T21n1262_001:0291b07_2": "或自稱星死者。",
    "T21n1262_001:0291b07_3": "自稱病死者。",
    "T21n1262_001:0291b08_4": "如是耗亂人。",
    "T21n1262_001:0291b08_5": "適不在一處。",
    "T21n1262_001:0291b08_6": "極嫉害惡。",
    "T21n1262_001:0291b09_7": "如是矯稱。",
    "T21n1262_001:0291b09_8": "令人祠祀烹殺。",
    "T21n1262_001:0291b09_9": "人不知多為烹殺。",
    "T21n1262_001:0291b10_10": "飲食是鬼。",
    "T21n1262_001:0291b10_11": "是鬼亦不肯食。",
    "T21n1262_001:0291b10_12": "端嫉害欲使人犯殺。",
    "T21n1262_001:0291b11_13": "欲使人入地獄中。",
    "T21n1262_001:0291b11_14": "要不食之。",
    "T21n1262_001:0291b11_15": "見人祠祀喜。",
    "T21n1262_001:0291b12_16": "如是鬼亦不能護活人命。",
    "T21n1262_001:0291b12_17": "但益罪。",
    "T21n1262_001:0291b12_18": "愚癡人不知。",
    "T21n1262_001:0291b13_19": "坐鬼貧窮。",
    "T21n1262_001:0291b13_20": "鬼子母聞佛說是語。",
    "T21n1262_001:0291b13_21": "即一心自悔。",
    "T21n1262_001:0291b14_22": "即得須陀洹道。",
    "T21n1262_001:0291b14_23": "知方來去事。",
    "T21n1262_001:0291b14_24": "長跪白佛言。",
    "T21n1262_001:0291b15_25": "我愚癡不知。",
    "T21n1262_001:0291b15_26": "世世有惡乃爾。",
    "T21n1262_001:0291b15_27": "今我得持戒。",
    "T21n1262_001:0291b16_0": "思惟中正之道。",
    "T21n1262_001:0291b16_1": "我心皆徹視。",
    "T21n1262_001:0291b16_2": "還見我千子。",
    "T21n1262_001:0291b16_3": "今我乃知。",
    "T21n1262_001:0291b17_4": "佛所至至語成。",
    "T21n1262_001:0291b17_5": "願佛哀我。",
    "T21n1262_001:0291b17_6": "我欲止佛精舍傍。",
    "T21n1262_001:0291b18_7": "我欲呼千子王。",
    "T21n1262_001:0291b18_8": "我欲使與佛結要。",
    "T21n1262_001:0291b19_0": "我欲報復天上天下人恩。",
    "T21n1262_001:0291b19_1": "佛言善哉。",
    "T21n1262_001:0291b19_2": "如汝有是意大善。",
    "T21n1262_001:0291b20_3": "佛言。",
    "T21n1262_001:0291b20_4": "汝從是已去。",
    "T21n1262_001:0291b20_5": "當稱是語。",
    "T21n1262_001:0291b20_6": "便止佛精舍邊。",
    "T21n1262_001:0291b21_7": "其國中人民。",
    "T21n1262_001:0291b21_8": "無子者來求子。",
    "T21n1262_001:0291b21_9": "當與之子。",
    "T21n1262_001:0291b22_10": "自在所願。",
    "T21n1262_001:0291b22_11": "我當勅子姓。",
    "T21n1262_001:0291b22_12": "與使隨護人。",
    "T21n1262_001:0291b23_0": "不得復妄嬈之。",
    "T21n1262_001:0291b23_1": "欲從鬼子母求願者。",
    "T21n1262_001:0291b23_2": "名浮陀摩尼鉢。",
    "T21n1262_001:0291b24_3": "姊名炙匿。",
    "T21n1262_001:0291b24_4": "天上天下鬼屬。",
    "T21n1262_001:0291b24_5": "是摩尼鉢主四海內。",
    "T21n1262_001:0291b25_6": "船車治生有財產。",
    "T21n1262_001:0291b25_7": "皆屬摩尼鉢。",
    "T21n1262_001:0291b26_8": "摩尼鉢與佛結要。",
    "T21n1262_001:0291b26_9": "受戒主護人財物。",
    "T21n1262_001:0291b26_10": "炙匿主人若有產生當救之。",
    "T21n1262_001:0291b27_11": "有天王名毘沙門。",
    "T21n1262_001:0291b27_12": "主四天地。",
    "T21n1262_001:0291b28_13": "護人命。",
    "T21n1262_001:0291b28_14": "出入常從毘沙門。",
    "T21n1262_001:0291b28_15": "求願有大鬼王。",
    "T21n1262_001:0291b29_16": "名阿須倫。",
    "T21n1262_001:0291b29_17": "主諸龍王。",
    "T21n1262_001:0291b29_18": "諸毒氣人。",
    "T21n1262_001:0291b29_19": "從求願令毒不干人。",
    "T21n1262_001:0291c01_20": "求願當慈心無所用謝。",
    "T21n1262_001:0291c01_21": "亦無所噉食人。",
    "T21n1262_001:0291c02_22": "從求願者在人何求與耳。",
    "T21n1262_001:0291c02_23": "要無所求索。",
    "T21n1262_001:0291c03_24": "亦不責人。",
    "T21n1262_001:0291c03_25": "人至浮陀摩尼鉢前為作禮。",
    "T21n1262_001:0291c04_0": "佛說鬼子母經"
}