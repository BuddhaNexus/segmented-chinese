[
    {
        "source_sentence": "佛說大乘戒經",
        "from": "T24n1497_001:1104a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚卿",
        "from": "T24n1497_001:1104a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳法大師臣施護奉　詔譯",
        "from": "T24n1497_001:1104a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞：",
        "from": "T24n1497_001:1104a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T24n1497_001:1104a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告苾芻言：",
        "from": "T24n1497_001:1104a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有破壞戒行壽命者、有斷滅善根者，出家難值，發精進心，堅固守護。",
        "from": "T24n1497_001:1104a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸苾芻等，於佛法中求解脫者，遠離一切諸惡苦惱，如佛所說，寧捨身命而趣無常，不得縱心犯其戒律。",
        "from": "T24n1497_001:1104a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人捨命只壞一生，若復破戒，令百萬生沈淪惡道。",
        "from": "T24n1497_001:1104a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人持戒當得見佛。",
        "from": "T24n1497_001:1104a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒為最上莊嚴，戒為最上妙香，戒為歡喜勝因。",
        "from": "T24n1497_001:1104a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒體清淨，如清冷水，能除熱惱。",
        "from": "T24n1497_001:1104a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒法最大，世間呪法，龍蛇之毒而不能侵。",
        "from": "T24n1497_001:1104a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒得名聞，持戒獲安樂，如是命終時，復得生天上。",
        "from": "T24n1497_001:1104a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T24n1497_001:1104a26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「苾芻！",
        "from": "T24n1497_001:1104a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若犯律儀，譬如盲人，不見眾色，亦如無足，不能行道，遠離涅槃，不到彼岸。",
        "from": "T24n1497_001:1104a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若持戒人成就一切法寶，譬如賢瓶，圓滿堅固，能盛一切珍寶。",
        "from": "T24n1497_001:1104b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是破損，珍寶散失；",
        "from": "T24n1497_001:1104b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若破律儀，則捨一切善法。",
        "from": "T24n1497_001:1104b02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先曾犯戒，而後心欲求涅盤，如去眼、耳，對鏡照面，何所堪能！",
        "from": "T24n1497_001:1104b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T24n1497_001:1104b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「苾芻！",
        "from": "T24n1497_001:1104b03_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "女人無信，不可親近；",
        "from": "T24n1497_001:1104b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王恩雖勝，不可恃怙；",
        "from": "T24n1497_001:1104b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水沫無實，不可撮摩；",
        "from": "T24n1497_001:1104b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴無常，不可久住；",
        "from": "T24n1497_001:1104b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色相如花，須臾變異；",
        "from": "T24n1497_001:1104b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽如熟菓，不可久停，如急流渡船、如朽屋暫住；",
        "from": "T24n1497_001:1104b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧食毒藥，不得飲酒；",
        "from": "T24n1497_001:1104b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧入大火，不得嗜慾！",
        "from": "T24n1497_001:1104b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說是經已，時彼苾芻及諸菩薩皆大歡喜，信受奉行。",
        "from": "T24n1497_001:1104b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說大乘戒經",
        "from": "T24n1497_001:1104b10_100",
        "context_with_next_sentence": false
    }
]