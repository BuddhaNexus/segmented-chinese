[
    {
        "source_sentence": "北斗七星護摩祕要儀軌",
        "from": "T21n1306_001:0424b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大興善寺翻經院灌頂阿闍梨述",
        "from": "T21n1306_001:0424b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為末世薄福眾生故。說是北極七星供",
        "from": "T21n1306_001:0424b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "養護摩次第儀則。",
        "from": "T21n1306_001:0424b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於靜室中作一水壇。",
        "from": "T21n1306_001:0424b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或方或圓各足一肘。",
        "from": "T21n1306_001:0424b12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以茅香甘松熏陸龍腦白檀五味和合泥塗之。",
        "from": "T21n1306_001:0424b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其壇場內安著圓爐。",
        "from": "T21n1306_001:0424b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲食果子分別置之。",
        "from": "T21n1306_001:0424b14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒食謂飯食果餅酥蜜等。",
        "from": "T21n1306_001:0424b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但五穀并乳木。",
        "from": "T21n1306_001:0424b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨人命星相撿用之。",
        "from": "T21n1306_001:0424b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先啟詞曰　至心奉啟北極七明娜羅貪狼巨門祿存文曲廉貞武曲破軍尊星。",
        "from": "T21n1306_001:0424b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為陀主某甲。",
        "from": "T21n1306_001:0424b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災厄解脫壽命延長得見百秋。",
        "from": "T21n1306_001:0424b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今作曼荼羅。",
        "from": "T21n1306_001:0424b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願垂哀降臨此處。",
        "from": "T21n1306_001:0424b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "納受護摩。",
        "from": "T21n1306_001:0424b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護施主某甲。",
        "from": "T21n1306_001:0424b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災難解脫壽命增長所願從心三遍。",
        "from": "T21n1306_001:0424b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結其印。",
        "from": "T21n1306_001:0424b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛心合掌。",
        "from": "T21n1306_001:0424b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大指。",
        "from": "T21n1306_001:0424b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻二無名指甲。",
        "from": "T21n1306_001:0424b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二中指二小指如蓮葉。",
        "from": "T21n1306_001:0424b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二頭指小開屈來去。",
        "from": "T21n1306_001:0424b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦一字頂輪王真言。",
        "from": "T21n1306_001:0424b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并召北斗七星真言。",
        "from": "T21n1306_001:0424b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂輪真言曰。",
        "from": "T21n1306_001:0424b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄖩曩􄗭慕􄙺三􄗥曼􆩖多􄕯那􄗽羅􄕯􄗽那羅􄖵跛􄑼左􄗽囉􈅼吽召北斗真言曰。",
        "from": "T21n1306_001:0424c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􄖩曩􄗰莫􄙺三􄗥曼􆩖多􄕯那􄗽羅􄖩曩􆿏翳􈂯醯􄚪呬􄖵頗􆿇伊􄚨賀􆿇伊􄕯那􆿇伊􄑀迦􆿇伊􄗽囉􆿇伊􄫴謨囉二合􄕗哆􄗽囉􄑤伽􄗽囉􄚲唅􇩉娑嚩􄚩訶以手取木及穀并酥蜜油等。",
        "from": "T21n1306_001:0424c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲之於爐內火燒之。",
        "from": "T21n1306_001:0424c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自專視其本命之星。",
        "from": "T21n1306_001:0424c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若動搖變色。",
        "from": "T21n1306_001:0424c11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光照通爍光貌黃白者。",
        "from": "T21n1306_001:0424c12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即應願如來依前法七日夜而為之。",
        "from": "T21n1306_001:0424c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必應如事不即其星藏沒不見決云不求也謂北斗七星者日月五星之精也。",
        "from": "T21n1306_001:0425a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩括七曜照臨八方上曜於天神下直于人間。",
        "from": "T21n1306_001:0425a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以司善惡而分禍福。",
        "from": "T21n1306_001:0425a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "群星所朝宗萬靈所俯仰。",
        "from": "T21n1306_001:0425a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人能禮拜供養長壽福貴。",
        "from": "T21n1306_001:0425a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不信敬者運命不久。",
        "from": "T21n1306_001:0425a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以祿命書云。",
        "from": "T21n1306_001:0425a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世有司命神每至庚申日。",
        "from": "T21n1306_001:0425a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上向天帝陳說眾人之罪惡。",
        "from": "T21n1306_001:0425a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重罪者則徹算。",
        "from": "T21n1306_001:0425a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輕罪者則去紀。",
        "from": "T21n1306_001:0425a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "算書紀告即主命已者。",
        "from": "T21n1306_001:0425a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故如來為末世薄福短命夭死眾生故。",
        "from": "T21n1306_001:0425a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是一字頂輪王召北斗七星供養護摩之儀則。",
        "from": "T21n1306_001:0425a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為供養者。",
        "from": "T21n1306_001:0425a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其屬命星數削死籍還付生籍。",
        "from": "T21n1306_001:0425a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸國王於自宮中作曼茶羅。",
        "from": "T21n1306_001:0425a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如法護摩禮拜供養。",
        "from": "T21n1306_001:0425a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北斗歡喜為擁護故。",
        "from": "T21n1306_001:0425a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久居勝位恒受安穩。",
        "from": "T21n1306_001:0425a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "后妃夫人後宮綵女。",
        "from": "T21n1306_001:0425a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王子群臣三公百官。",
        "from": "T21n1306_001:0425a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上下和穆不行非法。",
        "from": "T21n1306_001:0425a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人民熾盛稼穡豐饒國土安寧。",
        "from": "T21n1306_001:0425a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有災難不現怪異。",
        "from": "T21n1306_001:0425a15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疫病死亡不起。",
        "from": "T21n1306_001:0425a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "境內怨敵群賊自然退散。",
        "from": "T21n1306_001:0425a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故以是法甚為祕要。",
        "from": "T21n1306_001:0425a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北斗七星祕要儀軌",
        "from": "T21n1306_001:0425a17_100",
        "context_with_next_sentence": false
    }
]