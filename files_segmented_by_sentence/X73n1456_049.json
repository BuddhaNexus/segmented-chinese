{
    "X73n1456_049:0800c07_0": "憨山老人夢遊集卷第四十九",
    "X73n1456_049:0800c09_0": "侍　者　　福　善　日錄",
    "X73n1456_049:0800c10_0": "門　人　　通　炯　編輯",
    "X73n1456_049:0800c11_0": "嶺南弟子　劉起相　重較",
    "X73n1456_049:0800c12_0": "南嶽逢何玄圃",
    "X73n1456_049:0800c13_0": "相逢南嶽前。",
    "X73n1456_049:0800c13_1": "坐對中秋月。",
    "X73n1456_049:0800c13_2": "清光徹夜看。",
    "X73n1456_049:0800c13_3": "疑是燕山雪。",
    "X73n1456_049:0800c14_0": "玉山",
    "X73n1456_049:0800c15_0": "閒登玉山頭。",
    "X73n1456_049:0800c15_1": "城中見烟火。",
    "X73n1456_049:0800c15_2": "萬井密如雲。",
    "X73n1456_049:0800c15_3": "蓮花青朵朵。",
    "X73n1456_049:0800c16_0": "望江樓",
    "X73n1456_049:0800c17_0": "獨上望江樓。",
    "X73n1456_049:0800c17_1": "四面山如織。",
    "X73n1456_049:0800c17_2": "中有飡霞人。",
    "X73n1456_049:0800c17_3": "相對不相識。",
    "X73n1456_049:0800c18_0": "高山寺",
    "X73n1456_049:0800c19_0": "山城枕江流。",
    "X73n1456_049:0800c19_1": "梵剎雲中起。",
    "X73n1456_049:0800c19_2": "鐘鳴萬戶開。",
    "X73n1456_049:0800c19_3": "人在蓮花裏。",
    "X73n1456_049:0800c20_0": "愚溪",
    "X73n1456_049:0800c21_0": "愚溪何似我。",
    "X73n1456_049:0800c21_1": "我愚溪不愚。",
    "X73n1456_049:0800c21_2": "流泉日夜響。",
    "X73n1456_049:0800c21_3": "說法聲嗚嗚。",
    "X73n1456_049:0800c22_0": "華嚴菴",
    "X73n1456_049:0800c23_0": "菴近恒河水。",
    "X73n1456_049:0800c23_1": "僧衣舍衛城。",
    "X73n1456_049:0800c23_2": "經聲和人語。",
    "X73n1456_049:0800c23_3": "總是說無生。",
    "X73n1456_049:0800c24_0": "雜咏二首",
    "X73n1456_049:0801a01_0": "白鶴飛冲霄。",
    "X73n1456_049:0801a01_1": "翛然任去住。",
    "X73n1456_049:0801a01_2": "可惜無礙身。",
    "X73n1456_049:0801a01_3": "不知生死路。",
    "X73n1456_049:0801a02_0": "螻蟻慕羶腥。",
    "X73n1456_049:0801a02_1": "逐氣呼伴侶。",
    "X73n1456_049:0801a02_2": "忙忙不暫停。",
    "X73n1456_049:0801a02_3": "所得能幾許。",
    "X73n1456_049:0801a03_0": "偶成二首",
    "X73n1456_049:0801a04_0": "法侶千峰影。",
    "X73n1456_049:0801a04_1": "生涯數畝田。",
    "X73n1456_049:0801a04_2": "信知人世裏。",
    "X73n1456_049:0801a04_3": "難結此中緣。",
    "X73n1456_049:0801a05_0": "青山待人歸。",
    "X73n1456_049:0801a05_1": "本欲求深契。",
    "X73n1456_049:0801a05_2": "誰知來者心。",
    "X73n1456_049:0801a05_3": "動靜多相戾。",
    "X73n1456_049:0801a06_0": "山居十三首",
    "X73n1456_049:0801a07_0": "片雲浮太虗。",
    "X73n1456_049:0801a07_1": "倏忽遍大地。",
    "X73n1456_049:0801a07_2": "試看未生前。",
    "X73n1456_049:0801a07_3": "清淨無纖翳。",
    "X73n1456_049:0801a08_0": "萬境本寂然。",
    "X73n1456_049:0801a08_1": "因心有起滅。",
    "X73n1456_049:0801a08_2": "一念若不生。",
    "X73n1456_049:0801a08_3": "動靜何處覓。",
    "X73n1456_049:0801a09_0": "長夜無燈燭。",
    "X73n1456_049:0801a09_1": "脩途總暗冥。",
    "X73n1456_049:0801a09_2": "可憐酣睡者。",
    "X73n1456_049:0801a09_3": "大夢幾時醒。",
    "X73n1456_049:0801a10_0": "青山容易入。",
    "X73n1456_049:0801a10_1": "白業不難修。",
    "X73n1456_049:0801a10_2": "獨有降心法。",
    "X73n1456_049:0801a10_3": "英雄讓一籌。",
    "X73n1456_049:0801a11_0": "一枕黃粱夢。",
    "X73n1456_049:0801a11_1": "千秋汗血功。",
    "X73n1456_049:0801a11_2": "秪知常不朽。",
    "X73n1456_049:0801a11_3": "誰信轉頭空。",
    "X73n1456_049:0801a12_0": "雪老蒼松古。",
    "X73n1456_049:0801a12_1": "僧閒水石清。",
    "X73n1456_049:0801a12_2": "坐來忘百慮。",
    "X73n1456_049:0801a12_3": "眼見一身輕。",
    "X73n1456_049:0801a13_0": "酷暑不可人。",
    "X73n1456_049:0801a13_1": "清風來竹下。",
    "X73n1456_049:0801a13_2": "颼颼涼氣生。",
    "X73n1456_049:0801a13_3": "毛骨頓瀟灑。",
    "X73n1456_049:0801a14_0": "風靜蟬聲急。",
    "X73n1456_049:0801a14_1": "龍歸雨氣腥。",
    "X73n1456_049:0801a14_2": "乘涼高樹下。",
    "X73n1456_049:0801a14_3": "閒寫換鵝經。",
    "X73n1456_049:0801a15_0": "雲深便野寺。",
    "X73n1456_049:0801a15_1": "僧老愛扶笻。",
    "X73n1456_049:0801a15_2": "乞食歸來晚。",
    "X73n1456_049:0801a15_3": "愁穿十里松。",
    "X73n1456_049:0801a16_0": "爽氣入疎林。",
    "X73n1456_049:0801a16_1": "萬山秋色好。",
    "X73n1456_049:0801a16_2": "貪看溪頭雲。",
    "X73n1456_049:0801a16_3": "忘却來時道。",
    "X73n1456_049:0801a17_0": "獨坐長松下。",
    "X73n1456_049:0801a17_1": "悠然太古心。",
    "X73n1456_049:0801a17_2": "高山流水意。",
    "X73n1456_049:0801a17_3": "誰復是知音。",
    "X73n1456_049:0801a18_0": "日月如飛鳥。",
    "X73n1456_049:0801a18_1": "乾坤似轉丸。",
    "X73n1456_049:0801a18_2": "浮生忙裏度。",
    "X73n1456_049:0801a18_3": "誰向靜中看。",
    "X73n1456_049:0801a19_0": "長明一碗燈。",
    "X73n1456_049:0801a19_1": "夜對心更寂。",
    "X73n1456_049:0801a19_2": "多少醉眠人。",
    "X73n1456_049:0801a19_3": "夢中狂未息。",
    "X73n1456_049:0801a20_0": "山居二十首(六言)",
    "X73n1456_049:0801a21_0": "松下數椽芽屋。",
    "X73n1456_049:0801a21_1": "眼前四面青山。",
    "X73n1456_049:0801a21_2": "日月升沉不住。",
    "X73n1456_049:0801a21_3": "白雲來去常閒。",
    "X73n1456_049:0801a23_0": "雪裏梅花初放。",
    "X73n1456_049:0801a23_1": "暗香深夜飛來。",
    "X73n1456_049:0801a23_2": "正對寒鐙獨坐。",
    "X73n1456_049:0801a23_3": "忽將鼻孔衝開。",
    "X73n1456_049:0801b01_0": "幾片白雲不去。",
    "X73n1456_049:0801b01_1": "一輪明月飛來。",
    "X73n1456_049:0801b01_2": "伴我山中寂寞。",
    "X73n1456_049:0801b01_3": "笑他世上塵埃。",
    "X73n1456_049:0801b03_0": "一片寒心雪夜。",
    "X73n1456_049:0801b03_1": "數聲破夢霜鐘。",
    "X73n1456_049:0801b03_2": "爐內香銷宿火。",
    "X73n1456_049:0801b03_3": "窻前月上孤峰。",
    "X73n1456_049:0801b05_0": "滿面清霜冽冽。",
    "X73n1456_049:0801b05_1": "盈頭白髮蕭蕭。",
    "X73n1456_049:0801b05_2": "世上空花影落。",
    "X73n1456_049:0801b05_3": "目中幻翳全消。",
    "X73n1456_049:0801b07_0": "淅淅泉聲入耳。",
    "X73n1456_049:0801b07_1": "明明祖意西來。",
    "X73n1456_049:0801b07_2": "不動舌根常說。",
    "X73n1456_049:0801b07_3": "何須再歎奇哉。",
    "X73n1456_049:0801b09_0": "幽谷蘭香馥馥。",
    "X73n1456_049:0801b09_1": "中宵月色娟娟。",
    "X73n1456_049:0801b09_2": "一段清塵勃勃。",
    "X73n1456_049:0801b09_3": "無端打破枯禪。",
    "X73n1456_049:0801b11_0": "一念忘緣寂寂。",
    "X73n1456_049:0801b11_1": "孤明獨照惺惺。",
    "X73n1456_049:0801b11_2": "看破空中閃電。",
    "X73n1456_049:0801b11_3": "非同目下飛螢。",
    "X73n1456_049:0801b13_0": "雲散長空雨過。",
    "X73n1456_049:0801b13_1": "雪消寒谷春生。",
    "X73n1456_049:0801b13_2": "但覺身如水洗。",
    "X73n1456_049:0801b13_3": "不知心似冰清。",
    "X73n1456_049:0801b15_0": "衰朽應憐骨弱。",
    "X73n1456_049:0801b15_1": "看來轉覺心強。",
    "X73n1456_049:0801b15_2": "午夜脊梁似鐵。",
    "X73n1456_049:0801b15_3": "常時一念如霜。",
    "X73n1456_049:0801b17_0": "空谷諸塵盡謝。",
    "X73n1456_049:0801b17_1": "止留一片閒雲。",
    "X73n1456_049:0801b17_2": "伴我松根揮麈。",
    "X73n1456_049:0801b17_3": "堪多麋鹿成羣。",
    "X73n1456_049:0801b19_0": "文字眼中幻翳。",
    "X73n1456_049:0801b19_1": "禪那心上浮塵。",
    "X73n1456_049:0801b19_2": "內外一齊拈却。",
    "X73n1456_049:0801b19_3": "大千世界全身。",
    "X73n1456_049:0801b21_0": "靜夜鐘聲不住。",
    "X73n1456_049:0801b21_1": "石牀夢想俱空。",
    "X73n1456_049:0801b21_2": "開眼不知何處。",
    "X73n1456_049:0801b21_3": "但聽滿耳松風。",
    "X73n1456_049:0801b23_0": "清淨涵空寶鏡。",
    "X73n1456_049:0801b23_1": "春來水滿彭湖。",
    "X73n1456_049:0801b23_2": "照徹廬山面目。",
    "X73n1456_049:0801b23_3": "月如額上明珠。",
    "X73n1456_049:0801c01_0": "蓮漏六時猶短。",
    "X73n1456_049:0801c01_1": "長香百刻安排。",
    "X73n1456_049:0801c01_2": "日夜真常流注。",
    "X73n1456_049:0801c01_3": "識神早托華胎。",
    "X73n1456_049:0801c03_0": "一片雲封谷口。",
    "X73n1456_049:0801c03_1": "千峰劃破虗空。",
    "X73n1456_049:0801c03_2": "中有數椽芽屋。",
    "X73n1456_049:0801c03_3": "深藏白髮山翁。",
    "X73n1456_049:0801c05_0": "可惜青山常在。",
    "X73n1456_049:0801c05_1": "堪嗟白髮時新。",
    "X73n1456_049:0801c05_2": "盡是塵中逆旅。",
    "X73n1456_049:0801c05_3": "誰為物外閒人。",
    "X73n1456_049:0801c07_0": "山色愁含宿雨。",
    "X73n1456_049:0801c07_1": "松聲冷咽清霜。",
    "X73n1456_049:0801c07_2": "乞食僧同倦鳥。",
    "X73n1456_049:0801c07_3": "娥眉月上新粧。",
    "X73n1456_049:0801c09_0": "世界光如水月。",
    "X73n1456_049:0801c09_1": "身心皎若琉璃。",
    "X73n1456_049:0801c09_2": "但見冰消澗底。",
    "X73n1456_049:0801c09_3": "不知春上花枝。",
    "X73n1456_049:0801c11_0": "門外青山朵朵。",
    "X73n1456_049:0801c11_1": "窻前黃葉蕭蕭。",
    "X73n1456_049:0801c11_2": "獨坐了無言說。",
    "X73n1456_049:0801c11_3": "回看妄想全消。",
    "X73n1456_049:0801c13_0": "舟中即事",
    "X73n1456_049:0801c14_0": "空水連天一葉舟。",
    "X73n1456_049:0801c14_1": "即看身世等浮漚。",
    "X73n1456_049:0801c14_2": "鴈聲呌破緣生夢。",
    "X73n1456_049:0801c15_3": "明月蘆花古渡頭。",
    "X73n1456_049:0801c16_0": "大姑山",
    "X73n1456_049:0801c17_0": "霞帶雲裳月偃眉。",
    "X73n1456_049:0801c17_1": "江湖滿目少相知。",
    "X73n1456_049:0801c17_2": "寒流徹底心如洗。",
    "X73n1456_049:0801c18_3": "莫問夫君是阿誰。",
    "X73n1456_049:0801c19_0": "姑山塔",
    "X73n1456_049:0801c20_0": "空裏浮圖水月身。",
    "X73n1456_049:0801c20_1": "太虗中點一微塵。",
    "X73n1456_049:0801c20_2": "行人兩眼重添屑。",
    "X73n1456_049:0801c21_3": "幾個男兒認得真。",
    "X73n1456_049:0801c22_0": "鄱湖寶陀寺",
    "X73n1456_049:0801c23_0": "玻璃宮殿水晶盤。",
    "X73n1456_049:0801c23_1": "面面青山碧玉欄。",
    "X73n1456_049:0801c23_2": "中有一人常說法。",
    "X73n1456_049:0801c24_3": "西江吸盡夜潮寒。",
    "X73n1456_049:0802a01_0": "過桐江輓曾健齋光祿",
    "X73n1456_049:0802a02_0": "龍華樹下舊相逢。",
    "X73n1456_049:0802a02_1": "每夜談心聽曉鐘。",
    "X73n1456_049:0802a02_2": "今日覓君桐水上。",
    "X73n1456_049:0802a03_3": "空含血淚灑春風。",
    "X73n1456_049:0802a04_0": "清江漁父詞二首",
    "X73n1456_049:0802a05_0": "水清沙白月如鈎。",
    "X73n1456_049:0802a05_1": "影落波心釣未收。",
    "X73n1456_049:0802a05_2": "無限遊魚吞不得。",
    "X73n1456_049:0802a06_3": "空教漁父抱深愁。",
    "X73n1456_049:0802a07_0": "一葉輕舟逐浪翻。",
    "X73n1456_049:0802a07_1": "五湖風月任加飡。",
    "X73n1456_049:0802a07_2": "夢魂常在深深處。",
    "X73n1456_049:0802a08_3": "最苦離鈎水更寒。",
    "X73n1456_049:0802a09_0": "舟次橫浦",
    "X73n1456_049:0802a10_0": "五雲一水入南安。",
    "X73n1456_049:0802a10_1": "萬疊山迴六六灘。",
    "X73n1456_049:0802a10_2": "行到水窮山盡處。",
    "X73n1456_049:0802a11_3": "梅花無數嶺頭看。",
    "X73n1456_049:0802a12_0": "登南安城",
    "X73n1456_049:0802a13_0": "城頭瓣瓣湧青蓮。",
    "X73n1456_049:0802a13_1": "花蕊香含萬戶烟。",
    "X73n1456_049:0802a13_2": "身在鏡中人不識。",
    "X73n1456_049:0802a14_3": "更於此外覓諸天。",
    "X73n1456_049:0802a15_0": "度大庾嶺二首",
    "X73n1456_049:0802a16_0": "一徑雲霞閣道深。",
    "X73n1456_049:0802a16_1": "梅花松雨氣陰森。",
    "X73n1456_049:0802a16_2": "翻思昔日宵行客。",
    "X73n1456_049:0802a17_3": "何似今朝度嶺心。",
    "X73n1456_049:0802a18_0": "嶺上寒梅正發花。",
    "X73n1456_049:0802a18_1": "枝頭雲擁舊袈裟。",
    "X73n1456_049:0802a18_2": "試將拄杖重拈出。",
    "X73n1456_049:0802a19_3": "香逐天風遍海涯。",
    "X73n1456_049:0802a20_0": "曹溪謁六祖大師二首",
    "X73n1456_049:0802a21_0": "曹溪滴水自靈淵。",
    "X73n1456_049:0802a21_1": "流入滄溟浪拍天。",
    "X73n1456_049:0802a21_2": "多少魚龍從變化。",
    "X73n1456_049:0802a22_3": "源頭一脉尚泠然。",
    "X73n1456_049:0802a23_0": "樵斧纔拋石墜腰。",
    "X73n1456_049:0802a23_1": "黃梅夜半寂無聊。",
    "X73n1456_049:0802a23_2": "自持一鉢南歸後。",
    "X73n1456_049:0802a24_3": "從此兒孫氣日驕。",
    "X73n1456_049:0802b01_0": "廣州道中二首",
    "X73n1456_049:0802b02_0": "烟水南遊歷百城。",
    "X73n1456_049:0802b02_1": "相逢知識總無情。",
    "X73n1456_049:0802b02_2": "挨身纔欲須臾住。",
    "X73n1456_049:0802b03_3": "又指前途向別行。",
    "X73n1456_049:0802b04_0": "兩岸中流總不容。",
    "X73n1456_049:0802b04_1": "扁舟逐浪任天風。",
    "X73n1456_049:0802b04_2": "直須高挂孤帆去。",
    "X73n1456_049:0802b05_3": "自信恩波到處同。",
    "X73n1456_049:0802b06_0": "抵雷陽戍所",
    "X73n1456_049:0802b07_0": "瘴海嵐烟日夜浮。",
    "X73n1456_049:0802b07_1": "龍蛇氣吐混清流。",
    "X73n1456_049:0802b07_2": "到來盡是無生國。",
    "X73n1456_049:0802b08_3": "愈見　君恩未易酬。",
    "X73n1456_049:0802b09_0": "寄少林無言宗師二首",
    "X73n1456_049:0802b10_0": "五乳峰頭草木深。",
    "X73n1456_049:0802b10_1": "春來花發滿空林。",
    "X73n1456_049:0802b10_2": "峰頭積雪仍千尺。",
    "X73n1456_049:0802b11_3": "誰似當年斷臂心。",
    "X73n1456_049:0802b12_0": "清涼會罷復長安。",
    "X73n1456_049:0802b12_1": "一度相逢一度歡。",
    "X73n1456_049:0802b12_2": "別後天南望天北。",
    "X73n1456_049:0802b13_3": "炎風朔雪兩相看。",
    "X73n1456_049:0802b14_0": "放舟波羅江",
    "X73n1456_049:0802b15_0": "片帆東去海波平。",
    "X73n1456_049:0802b15_1": "簫皷如從天上鳴。",
    "X73n1456_049:0802b15_2": "遙望三山天外落。",
    "X73n1456_049:0802b16_3": "不知人在鏡中行。",
    "X73n1456_049:0802b17_0": "寄小金山珍公",
    "X73n1456_049:0802b18_0": "天風吹上妙高臺。",
    "X73n1456_049:0802b18_1": "午夜乘潮載月回。",
    "X73n1456_049:0802b18_2": "灑掃楞伽山上石。",
    "X73n1456_049:0802b19_3": "待余重為寫經來。",
    "X73n1456_049:0802b20_0": "小金山三首",
    "X73n1456_049:0802b21_0": "萬里長波萬里流。",
    "X73n1456_049:0802b21_1": "誰將拳石砥中洲。",
    "X73n1456_049:0802b21_2": "不因禹鑿開三級。",
    "X73n1456_049:0802b22_3": "自是魚龍會點頭。",
    "X73n1456_049:0802b23_0": "水晶宮殿絕塵蹤。",
    "X73n1456_049:0802b23_1": "香霧氤氛露氣濃。",
    "X73n1456_049:0802b23_2": "明月空中浮客櫂。",
    "X73n1456_049:0802b24_3": "夜深堦下臥魚龍。",
    "X73n1456_049:0802c01_0": "山浮水面寺依空。",
    "X73n1456_049:0802c01_1": "樓閣虗無杳靄中。",
    "X73n1456_049:0802c01_2": "不是幻成人世界。",
    "X73n1456_049:0802c02_3": "多應天湧梵王宮。",
    "X73n1456_049:0802c03_0": "寄河東妙峰師三首",
    "X73n1456_049:0802c04_0": "首陽山色枕河流。",
    "X73n1456_049:0802c04_1": "師住中條最上頭。",
    "X73n1456_049:0802c04_2": "麻谷牀前章敬錫。",
    "X73n1456_049:0802c05_3": "至今風韻鬼神愁。",
    "X73n1456_049:0802c06_0": "黃河一線自天來。",
    "X73n1456_049:0802c06_1": "流入中原洗刼灰。",
    "X73n1456_049:0802c06_2": "把斷要關看砥柱。",
    "X73n1456_049:0802c07_3": "慈航不數濟川才。",
    "X73n1456_049:0802c08_0": "天涯行盡路途難。",
    "X73n1456_049:0802c08_1": "毒霧炎風任飽飡。",
    "X73n1456_049:0802c08_2": "忽憶龍門千丈雪。",
    "X73n1456_049:0802c09_3": "猛然提起徹心寒。",
    "X73n1456_049:0802c10_0": "答高常侍寄香",
    "X73n1456_049:0802c11_0": "一瓣名香出上方。",
    "X73n1456_049:0802c11_1": "封書遙寄到炎荒。",
    "X73n1456_049:0802c11_2": "夢聽刁斗疑鐘磬。",
    "X73n1456_049:0802c12_3": "夜起親焚禮法王。",
    "X73n1456_049:0802c13_0": "懷五臺龍門舊居",
    "X73n1456_049:0802c14_0": "萬年冰雪擁芽廬。",
    "X73n1456_049:0802c14_1": "一別於今廿載餘。",
    "X73n1456_049:0802c14_2": "叶斗峰頭明月夜。",
    "X73n1456_049:0802c15_3": "不知誰在此安居。",
    "X73n1456_049:0802c16_0": "憶匡山",
    "X73n1456_049:0802c17_0": "遙憶匡山五老峰。",
    "X73n1456_049:0802c17_1": "白雲深鎻萬株松。",
    "X73n1456_049:0802c17_2": "寒空月照彭湖水。",
    "X73n1456_049:0802c18_3": "瀑布聲飛幾度鐘。",
    "X73n1456_049:0802c19_0": "懷匡山天池憑虗閣主人",
    "X73n1456_049:0802c20_0": "空中樓閣閣中人。",
    "X73n1456_049:0802c20_1": "宛似花間自在身。",
    "X73n1456_049:0802c20_2": "午夜天池浸明月。",
    "X73n1456_049:0802c21_3": "不知此際與誰親。",
    "X73n1456_049:0802c22_0": "五羊喜譚子文至自薊門二首",
    "X73n1456_049:0802c23_0": "西山雪擁薊門寒。",
    "X73n1456_049:0802c23_1": "曾憶圍爐坐夜殘。",
    "X73n1456_049:0802c23_2": "一別杳然如隔世。",
    "X73n1456_049:0802c24_3": "相逢疑是夢中看。",
    "X73n1456_049:0803a01_0": "炎風朔雪兩無憑。",
    "X73n1456_049:0803a01_1": "火宅何如大地冰。",
    "X73n1456_049:0803a01_2": "相對莫驚鬚鬢改。",
    "X73n1456_049:0803a02_3": "此心元是五臺僧。",
    "X73n1456_049:0803a03_0": "憶家山並諸舊遊(有引)",
    "X73n1456_049:0803a04_0": "余別家山三十餘年矣。",
    "X73n1456_049:0803a04_1": "今被放嶺外。",
    "X73n1456_049:0803a04_2": "適法兄珂公。",
    "X73n1456_049:0803a05_0": "同廣姪遠慰。",
    "X73n1456_049:0803a05_1": "因成三絕書。",
    "X73n1456_049:0803a05_2": "還懸之舊壁。",
    "X73n1456_049:0803a05_3": "以見人生幻跡如此。",
    "X73n1456_049:0803a07_0": "萬竿竹遶舊庵居。",
    "X73n1456_049:0803a07_1": "樓上仍懸讀遍書。",
    "X73n1456_049:0803a07_2": "夢見四簷青不改。",
    "X73n1456_049:0803a08_3": "空留明月照庭除。",
    "X73n1456_049:0803a09_0": "長安陌上舊行蹤。",
    "X73n1456_049:0803a09_1": "吹盡微塵曉夜風。",
    "X73n1456_049:0803a09_2": "別後消磨三十載。",
    "X73n1456_049:0803a10_3": "不知幾許出虗空。",
    "X73n1456_049:0803a11_0": "憶昔兒童共聚沙。",
    "X73n1456_049:0803a11_1": "百千嬉戲笑如花。",
    "X73n1456_049:0803a11_2": "風霜縱使形容變。",
    "X73n1456_049:0803a12_3": "此念渾同未離家。",
    "X73n1456_049:0803a13_0": "本寺回祿。",
    "X73n1456_049:0803a13_1": "余亦遠遊。",
    "X73n1456_049:0803a13_2": "久抱修復之念。",
    "X73n1456_049:0803a13_3": "今聞恩兄已新寶塔。",
    "X73n1456_049:0803a14_4": "而殿宇尚在荊榛。",
    "X73n1456_049:0803a14_5": "感念嬰心。",
    "X73n1456_049:0803a14_6": "遙寄以詩洞然刼火憶當年。",
    "X73n1456_049:0803a16_7": "寶塔如生火裏蓮。",
    "X73n1456_049:0803a16_8": "今見優曇花再現。",
    "X73n1456_049:0803a17_9": "何時重覩率陀天。",
    "X73n1456_049:0803a18_0": "獨坐",
    "X73n1456_049:0803a19_0": "七軸蓮華一炷香。",
    "X73n1456_049:0803a19_1": "晝長趺坐倚匡牀。",
    "X73n1456_049:0803a19_2": "市塵門外深千尺。",
    "X73n1456_049:0803a20_3": "唯任輪蹄日夜忙。",
    "X73n1456_049:0803a21_0": "送劉貽哲還鄉兼東諸故人三首",
    "X73n1456_049:0803a22_0": "瘴海三年共此心。",
    "X73n1456_049:0803a22_1": "形骸總不屬浮沉。",
    "X73n1456_049:0803a22_2": "君歸獨載秋江月。",
    "X73n1456_049:0803a23_3": "徹底寒波思更深。",
    "X73n1456_049:0803a24_0": "身自驅馳心自閒。",
    "X73n1456_049:0803a24_1": "窮廬獵隊等青山。",
    "X73n1456_049:0803a24_2": "故人儻問余消息。",
    "X73n1456_049:0803b01_3": "只道婆娑鬢已班。",
    "X73n1456_049:0803b02_0": "世路崎嶇不易行。",
    "X73n1456_049:0803b02_1": "幾能真見是浮生。",
    "X73n1456_049:0803b02_2": "君歸儻過西湖上。",
    "X73n1456_049:0803b03_3": "試看蓮花出水情。",
    "X73n1456_049:0803b04_0": "軍中寄懷虗谷師",
    "X73n1456_049:0803b05_0": "禪板輕拋事皷鼙。",
    "X73n1456_049:0803b05_1": "跏趺鞍馬不相宜。",
    "X73n1456_049:0803b05_2": "夜深月照轅門下。",
    "X73n1456_049:0803b06_3": "恰似松陰對坐時。",
    "X73n1456_049:0803b07_0": "懷天臺山二首",
    "X73n1456_049:0803b08_0": "天姥雲霞傍海多。",
    "X73n1456_049:0803b08_1": "半生夢想竟空過。",
    "X73n1456_049:0803b08_2": "何時一曳撩天杖。",
    "X73n1456_049:0803b09_3": "打醒癡僧寂滅魔。",
    "X73n1456_049:0803b10_0": "華頂峰頭月倍明。",
    "X73n1456_049:0803b10_1": "石梁橋下水偏清。",
    "X73n1456_049:0803b10_2": "能持一滴來炎海。",
    "X73n1456_049:0803b11_3": "猶勝曇花盞內生。",
    "X73n1456_049:0803b12_0": "曹溪四時詠",
    "X73n1456_049:0803b13_0": "祖意明明百草頭。",
    "X73n1456_049:0803b13_1": "春林花發鳥聲幽。",
    "X73n1456_049:0803b13_2": "朝來雨過山如洗。",
    "X73n1456_049:0803b14_3": "紅白枝枝露未收。",
    "X73n1456_049:0803b15_0": "四山密密綠陰濃。",
    "X73n1456_049:0803b15_1": "窗下風來水面松。",
    "X73n1456_049:0803b15_2": "午睡正鼾纔欲夢。",
    "X73n1456_049:0803b16_3": "長廊忽聽一聲鐘。",
    "X73n1456_049:0803b17_0": "刀耕火種是良方。",
    "X73n1456_049:0803b17_1": "秋到家家晚稻香。",
    "X73n1456_049:0803b17_2": "放不下時擔取去。",
    "X73n1456_049:0803b18_3": "何如老偃在韶陽。",
    "X73n1456_049:0803b19_0": "夜深旋煑雪中茶。",
    "X73n1456_049:0803b19_1": "此味天然最可誇。",
    "X73n1456_049:0803b19_2": "更有一般奇特處。",
    "X73n1456_049:0803b20_3": "滿林寒月浸梅花。",
    "X73n1456_049:0803b21_0": "軍中吟二首",
    "X73n1456_049:0803b22_0": "鐵甲天教當敝裘。",
    "X73n1456_049:0803b22_1": "從軍原不為封侯。",
    "X73n1456_049:0803b22_2": "身經赫日如爐冶。",
    "X73n1456_049:0803b23_3": "傲骨而今鍊已柔。",
    "X73n1456_049:0803b24_0": "緇衣脫却換戎裝。",
    "X73n1456_049:0803b24_1": "始信隨緣是道場。",
    "X73n1456_049:0803b24_2": "縱使炎天如烈火。",
    "X73n1456_049:0803c01_3": "難消冰雪冷心腸。",
    "X73n1456_049:0803c02_0": "陳生讀書天甯寺",
    "X73n1456_049:0803c03_0": "跡寄祇園已出塵。",
    "X73n1456_049:0803c03_1": "夜眠應與佛相親。",
    "X73n1456_049:0803c03_2": "夢魂忽被鐘敲破。",
    "X73n1456_049:0803c04_3": "始信原為聽法人。",
    "X73n1456_049:0803c05_0": "海月樓",
    "X73n1456_049:0803c06_0": "海天空處一樓居。",
    "X73n1456_049:0803c06_1": "方丈中涵無盡虗。",
    "X73n1456_049:0803c06_2": "夜起開窗放明月。",
    "X73n1456_049:0803c07_3": "波光霞氣滿襟裾。",
    "X73n1456_049:0803c08_0": "劉生讀書石湖",
    "X73n1456_049:0803c09_0": "心似寒泉色若冰。",
    "X73n1456_049:0803c09_1": "幽居不讓石巖僧。",
    "X73n1456_049:0803c09_2": "夜烹一滴源頭水。",
    "X73n1456_049:0803c10_3": "乞火頻分照佛燈。",
    "X73n1456_049:0803c11_0": "寄雲棲大師",
    "X73n1456_049:0803c12_0": "長眉鶴髮久棲雲。",
    "X73n1456_049:0803c12_1": "麈尾時揮繞鹿羣。",
    "X73n1456_049:0803c12_2": "遙寄旃檀香一瓣。",
    "X73n1456_049:0803c13_3": "想師拈對法王焚。",
    "X73n1456_049:0803c14_0": "寄屠赤水居士",
    "X73n1456_049:0803c15_0": "維摩家近白花山。",
    "X73n1456_049:0803c15_1": "烟水微茫海印寒。",
    "X73n1456_049:0803c15_2": "聞道文殊又東去。",
    "X73n1456_049:0803c16_3": "不知香飯對誰飡。",
    "X73n1456_049:0803c17_0": "寄馮開之太史索楞伽經序",
    "X73n1456_049:0803c18_0": "憶昔千華一對談。",
    "X73n1456_049:0803c18_1": "珍衣脫却久[監*毛]毿。",
    "X73n1456_049:0803c18_2": "楞伽山上摩尼聚。",
    "X73n1456_049:0803c19_3": "何日重開百寶函。",
    "X73n1456_049:0803c20_0": "讀達觀大師末後偈",
    "X73n1456_049:0803c21_0": "一念從來絕覆藏。",
    "X73n1456_049:0803c21_1": "通身不落是非場。",
    "X73n1456_049:0803c21_2": "試看撒手輕拈出。",
    "X73n1456_049:0803c22_3": "始信阿師熱肚腸。",
    "X73n1456_049:0803c23_0": "懷五臺舊居",
    "X73n1456_049:0803c24_0": "叶斗峰頭雪未消。",
    "X73n1456_049:0803c24_1": "別來音信久寥寥。",
    "X73n1456_049:0803c24_2": "炎方塵夢經行處。",
    "X73n1456_049:0804a01_3": "曳杖閒過獨木橋。",
    "X73n1456_049:0804a02_0": "軍中寄懷黃羽李侍御六首",
    "X73n1456_049:0804a03_0": "十年戎馬走炎荒。",
    "X73n1456_049:0804a03_1": "常憶同遊海印光。",
    "X73n1456_049:0804a03_2": "大火聚中求著脚。",
    "X73n1456_049:0804a04_3": "與君別處最清涼。",
    "X73n1456_049:0804a05_0": "聚散浮雲不可期。",
    "X73n1456_049:0804a05_1": "此心未離別君時。",
    "X73n1456_049:0804a05_2": "兩輪日月如飛鳥。",
    "X73n1456_049:0804a06_3": "來往無停促夢思。",
    "X73n1456_049:0804a07_0": "大海長江一脉通。",
    "X73n1456_049:0804a07_1": "烟波浩渺總如空。",
    "X73n1456_049:0804a07_2": "萬山縱使能相隔。",
    "X73n1456_049:0804a08_3": "恰似空花落鏡中。",
    "X73n1456_049:0804a09_0": "虗空大地可消亡。",
    "X73n1456_049:0804a09_1": "此念如何屬斷常。",
    "X73n1456_049:0804a09_2": "試問維摩方丈內。",
    "X73n1456_049:0804a10_3": "近來諸有置何方。",
    "X73n1456_049:0804a11_0": "君先待漏紫宸朝。",
    "X73n1456_049:0804a11_1": "遙把楞伽問寂寥。",
    "X73n1456_049:0804a11_2": "侍者飽飡香飯後。",
    "X73n1456_049:0804a12_3": "至今一粒未曾消。",
    "X73n1456_049:0804a13_0": "世事虗空最是閒。",
    "X73n1456_049:0804a13_1": "乾坤何地沒青山。",
    "X73n1456_049:0804a13_2": "知君正眼相看處。",
    "X73n1456_049:0804a14_3": "不在音聲色相間。",
    "X73n1456_049:0804a15_0": "寄水田南皋鄒給諫",
    "X73n1456_049:0804a16_0": "門前一片福田衣。",
    "X73n1456_049:0804a16_1": "時折松枝當塵揮。",
    "X73n1456_049:0804a16_2": "山色溪聲常說法。",
    "X73n1456_049:0804a17_3": "不知若個是當機。",
    "X73n1456_049:0804a18_0": "題香爐峰紫雲菴",
    "X73n1456_049:0804a19_0": "香爐峰下紫雲深。",
    "X73n1456_049:0804a19_1": "松竹層崖白晝陰。",
    "X73n1456_049:0804a19_2": "門帶長江接溪水。",
    "X73n1456_049:0804a20_3": "清流洗盡世間心。",
    "X73n1456_049:0804a21_0": "山中夏日",
    "X73n1456_049:0804a22_0": "如焚夏日晝偏長。",
    "X73n1456_049:0804a22_1": "渴想菩提樹下涼。",
    "X73n1456_049:0804a22_2": "一陣風從空裏過。",
    "X73n1456_049:0804a23_3": "送來何處藕花香。",
    "X73n1456_049:0804a24_0": "懷九華山",
    "X73n1456_049:0804b01_0": "九江江上秀芙蓉。",
    "X73n1456_049:0804b01_1": "一帶雲霞六六峰。",
    "X73n1456_049:0804b01_2": "迴首瘴鄉明月夜。",
    "X73n1456_049:0804b02_3": "無端清夢挂寒松。",
    "X73n1456_049:0804b03_0": "繹公自衡陽來參",
    "X73n1456_049:0804b04_0": "遙向曹溪獨問津。",
    "X73n1456_049:0804b04_1": "溪頭秋水淨無塵。",
    "X73n1456_049:0804b04_2": "持來一片衡山月。",
    "X73n1456_049:0804b05_3": "猶照當年獵隊人。",
    "X73n1456_049:0804b06_0": "寄茶陵劉存赤居士",
    "X73n1456_049:0804b07_0": "見面何如未見真。",
    "X73n1456_049:0804b07_1": "朅來消息嶺頭春。",
    "X73n1456_049:0804b07_2": "衡山月色曹溪水。",
    "X73n1456_049:0804b08_3": "徹底相看是故人。",
    "X73n1456_049:0804b09_0": "舟次螺江訪僧鍾公不遇",
    "X73n1456_049:0804b10_0": "曾坐江樓待雪消。",
    "X73n1456_049:0804b10_1": "螺江春水急於潮。",
    "X73n1456_049:0804b10_2": "今看白鷺洲前月。",
    "X73n1456_049:0804b11_3": "猶似當年伴寂寥。",
    "X73n1456_049:0804b12_0": "蒙恩宥還山",
    "X73n1456_049:0804b13_0": "少小為僧五十年。",
    "X73n1456_049:0804b13_1": "老來特地混塵緣。",
    "X73n1456_049:0804b13_2": "從今走斷天涯路。",
    "X73n1456_049:0804b14_3": "此去千峰白晝眠。",
    "X73n1456_049:0804b15_0": "夜坐",
    "X73n1456_049:0804b16_0": "露灑幽蘭撲鼻香。",
    "X73n1456_049:0804b16_1": "風吹毛骨夜生涼。",
    "X73n1456_049:0804b16_2": "坐來已覺心如雪。",
    "X73n1456_049:0804b17_3": "月色還疑地上霜。",
    "X73n1456_049:0804b18_0": "夏日過法性寺二首",
    "X73n1456_049:0804b19_0": "菩提樹下風祛暑。",
    "X73n1456_049:0804b19_1": "般若臺前雨送涼。",
    "X73n1456_049:0804b19_2": "一盞清茶諸想滅。",
    "X73n1456_049:0804b20_3": "更於何處覓西方。",
    "X73n1456_049:0804b21_0": "覺樹當年向此栽。",
    "X73n1456_049:0804b21_1": "初心為待至人來。",
    "X73n1456_049:0804b21_2": "千秋衣鉢今仍在。",
    "X73n1456_049:0804b22_3": "說法誰登舊講臺。",
    "X73n1456_049:0804b23_0": "懷雪峰枯木堂",
    "X73n1456_049:0804b24_0": "枯木堂前冷似冰。",
    "X73n1456_049:0804b24_1": "當年曾坐半千僧。",
    "X73n1456_049:0804b24_2": "遙思一片寒灰地。",
    "X73n1456_049:0804c01_3": "何日重挑午夜燈。",
    "X73n1456_049:0804c02_0": "題畫二首",
    "X73n1456_049:0804c03_0": "飛來山色掩湖光。",
    "X73n1456_049:0804c03_1": "烟樹新晴帶夕陽。",
    "X73n1456_049:0804c03_2": "遙聽上方兜率界。",
    "X73n1456_049:0804c04_3": "半天鐘皷落微茫。",
    "X73n1456_049:0804c05_0": "一片烟波十五橋。",
    "X73n1456_049:0804c05_1": "雲山落木晚蕭蕭。",
    "X73n1456_049:0804c05_2": "孤城半壓吳江水。",
    "X73n1456_049:0804c06_3": "水上人家夜聽潮。",
    "X73n1456_049:0804c07_0": "將之雷陽江上別曇公",
    "X73n1456_049:0804c08_0": "相逢庾嶺日初遲。",
    "X73n1456_049:0804c08_1": "欲折梅花第幾枝。",
    "X73n1456_049:0804c08_2": "忽逐秋風度炎海。",
    "X73n1456_049:0804c09_3": "別君不似見君時。",
    "X73n1456_049:0804c10_0": "懷舊居",
    "X73n1456_049:0804c11_0": "安居舊住竹林西。",
    "X73n1456_049:0804c11_1": "明月溪頭幾杖藜。",
    "X73n1456_049:0804c11_2": "常想夜深松露下。",
    "X73n1456_049:0804c12_3": "不知猿鶴向誰啼。",
    "X73n1456_049:0804c13_0": "寄浮山澹居鎧公",
    "X73n1456_049:0804c14_0": "浮山九帶事如何。",
    "X73n1456_049:0804c14_1": "回首當年已爛柯。",
    "X73n1456_049:0804c14_2": "為問夜深趺坐處。",
    "X73n1456_049:0804c15_3": "白雲明月是誰多。",
    "X73n1456_049:0804c16_0": "舟次小金山志感",
    "X73n1456_049:0804c17_0": "常思半月經三度。",
    "X73n1456_049:0804c17_1": "倏爾暌携又五年。",
    "X73n1456_049:0804c17_2": "此日重來峰頂坐。",
    "X73n1456_049:0804c18_3": "德雲原不是生前。",
    "X73n1456_049:0804c19_0": "憶山中梅二首",
    "X73n1456_049:0804c20_0": "曹溪梅花。",
    "X73n1456_049:0804c20_1": "每至盛開。",
    "X73n1456_049:0804c20_2": "如坐香積世界。",
    "X73n1456_049:0804c20_3": "今冬以魔作祟。",
    "X73n1456_049:0804c21_4": "牽次芙蓉江上。",
    "X73n1456_049:0804c21_5": "望山中咫尺。",
    "X73n1456_049:0804c21_6": "不得坐享香供。",
    "X73n1456_049:0804c21_7": "詩以憶之。",
    "X73n1456_049:0804c23_0": "寒梅帶雪嶺頭開。",
    "X73n1456_049:0804c23_1": "冉冉天花落講臺。",
    "X73n1456_049:0804c23_2": "好遣上方香積國。",
    "X73n1456_049:0804c24_3": "為予一鉢盡擎來。",
    "X73n1456_049:0805a01_0": "梅花香樹積成林。",
    "X73n1456_049:0805a01_1": "香氣熏人悅可心。",
    "X73n1456_049:0805a01_2": "樹下現敷獅子座。",
    "X73n1456_049:0805a02_3": "風聲誰解海潮音。",
    "X73n1456_049:0805a03_0": "得東海門人江吾與書二首",
    "X73n1456_049:0805a04_0": "從空一紙故人書。",
    "X73n1456_049:0805a04_1": "萬里遙來問起居。",
    "X73n1456_049:0805a04_2": "為報親知零落盡。",
    "X73n1456_049:0805a05_3": "滿頭霜雪更愁予。",
    "X73n1456_049:0805a06_0": "十五年來坐瘴鄉。",
    "X73n1456_049:0805a06_1": "海天相對未能忘。",
    "X73n1456_049:0805a06_2": "時看萬里中霄月。",
    "X73n1456_049:0805a07_3": "一似同遊海印[莢-(人*人)+八]。",
    "X73n1456_049:0805a08_0": "古佛松林",
    "X73n1456_049:0805a09_0": "松陰幕幕淨無塵。",
    "X73n1456_049:0805a09_1": "山色雲光自法身。",
    "X73n1456_049:0805a09_2": "日夜風濤廣長舌。",
    "X73n1456_049:0805a10_3": "不知聽徹是何人。",
    "X73n1456_049:0805a11_0": "開元曉鐘",
    "X73n1456_049:0805a12_0": "明河清淺澹疎星。",
    "X73n1456_049:0805a12_1": "古寺虗簷宿百靈。",
    "X73n1456_049:0805a12_2": "一擊曉鐘驚大夢。",
    "X73n1456_049:0805a13_3": "不知誰最獨稱醒。",
    "X73n1456_049:0805a14_0": "平原古塔",
    "X73n1456_049:0805a15_0": "浮屠何代擁諸天。",
    "X73n1456_049:0805a15_1": "傳是隋朝大業年。",
    "X73n1456_049:0805a15_2": "蒼蘚剝封殘碣盡。",
    "X73n1456_049:0805a16_3": "平原荒草布金田。",
    "X73n1456_049:0805a17_0": "寄愚菴法師",
    "X73n1456_049:0805a18_0": "遙想華臺坐講時。",
    "X73n1456_049:0805a18_1": "四天彌覆法堂垂。",
    "X73n1456_049:0805a18_2": "座中龍象清如許。",
    "X73n1456_049:0805a19_3": "可記炎荒老赤髭。",
    "X73n1456_049:0805a20_0": "寄草堂法師",
    "X73n1456_049:0805a21_0": "瘴海還從坐寶林。",
    "X73n1456_049:0805a21_1": "常懷法窟舊知音。",
    "X73n1456_049:0805a21_2": "遙看一片燕山月。",
    "X73n1456_049:0805a22_3": "盡是隨緣度世心。",
    "X73n1456_049:0805a23_0": "山居偶成四首",
    "X73n1456_049:0805a24_0": "百年世事空華裏。",
    "X73n1456_049:0805a24_1": "一片身心水月間。",
    "X73n1456_049:0805a24_2": "獨許萬山深密處。",
    "X73n1456_049:0805b01_3": "晝長趺坐掩松關。",
    "X73n1456_049:0805b02_0": "滾滾紅塵世路長。",
    "X73n1456_049:0805b02_1": "不知何事走他鄉。",
    "X73n1456_049:0805b02_2": "回頭日望家山遠。",
    "X73n1456_049:0805b03_3": "滿目空雲帶夕陽。",
    "X73n1456_049:0805b04_0": "鬧藍誰肯急抽身。",
    "X73n1456_049:0805b04_1": "自古青山隔市塵。",
    "X73n1456_049:0805b04_2": "莫謂桃源無路入。",
    "X73n1456_049:0805b05_3": "落花流水是知津。",
    "X73n1456_049:0805b06_0": "日夜烟霞護翠微。",
    "X73n1456_049:0805b06_1": "相將猿鶴待忘機。",
    "X73n1456_049:0805b06_2": "青山莫道閒無主。",
    "X73n1456_049:0805b07_3": "自是閒人不肯歸。",
    "X73n1456_049:0805b08_0": "送隱知禪人還蜀",
    "X73n1456_049:0805b09_0": "一錫冷冷過瘴鄉。",
    "X73n1456_049:0805b09_1": "巫山西去思茫茫。",
    "X73n1456_049:0805b09_2": "峨眉峰頂新秋月。",
    "X73n1456_049:0805b10_3": "知爾看時到上方。",
    "X73n1456_049:0805b11_0": "寄題杜將軍曇花精舍二首",
    "X73n1456_049:0805b12_0": "皷吹轅門獨晏然。",
    "X73n1456_049:0805b12_1": "曇花樹下晝安禪。",
    "X73n1456_049:0805b12_2": "誰知可汗歸王日。",
    "X73n1456_049:0805b13_3": "正是將軍破有年。",
    "X73n1456_049:0805b14_0": "鐘皷胡笳總道場。",
    "X73n1456_049:0805b14_1": "旌旗影裏坐焚香。",
    "X73n1456_049:0805b14_2": "思君力破羣魔壘。",
    "X73n1456_049:0805b15_3": "自許心空見法王。",
    "X73n1456_049:0805b16_0": "送慈公還五臺",
    "X73n1456_049:0805b17_0": "一別臺山三十年。",
    "X73n1456_049:0805b17_1": "眼前冰雪尚依然。",
    "X73n1456_049:0805b17_2": "君來細說窟中事。",
    "X73n1456_049:0805b18_3": "又結多生未了緣。",
    "X73n1456_049:0805b19_0": "寄空印法師",
    "X73n1456_049:0805b20_0": "憶昔臺山百尺冰。",
    "X73n1456_049:0805b20_1": "與君對坐骨崚[山*層]。",
    "X73n1456_049:0805b20_2": "翻思三十餘年事。",
    "X73n1456_049:0805b21_3": "夢裏相看似不曾。",
    "X73n1456_049:0805b22_0": "別曹溪二首",
    "X73n1456_049:0805b23_0": "為決曹溪萬里流。",
    "X73n1456_049:0805b23_1": "歸心常撫大刀頭。",
    "X73n1456_049:0805b23_2": "因思血浸齊腰雪。",
    "X73n1456_049:0805b24_3": "千古令人痛未休。",
    "X73n1456_049:0805c01_0": "自為曹溪杖策來。",
    "X73n1456_049:0805c01_1": "坐看山色笑顏開。",
    "X73n1456_049:0805c01_2": "從今一別千峰去。",
    "X73n1456_049:0805c02_3": "鳥語溪聲不盡哀。",
    "X73n1456_049:0805c03_0": "初至衡陽喜雪二首",
    "X73n1456_049:0805c04_0": "七十峰頭雪正寒。",
    "X73n1456_049:0805c04_1": "到來深見此心安。",
    "X73n1456_049:0805c04_2": "回思火宅驅馳地。",
    "X73n1456_049:0805c05_3": "盡入冰壺影裏看。",
    "X73n1456_049:0805c06_0": "五熱場中幻化身。",
    "X73n1456_049:0805c06_1": "廿年來往任風塵。",
    "X73n1456_049:0805c06_2": "今歸一片瀟湘雪。",
    "X73n1456_049:0805c07_3": "原是清涼徹骨人。",
    "X73n1456_049:0805c08_0": "山居二十八首",
    "X73n1456_049:0805c09_0": "余生平抱烟霞之癖。",
    "X73n1456_049:0805c09_1": "早年行脚。",
    "X73n1456_049:0805c09_2": "三十住五臺冰雪中者八稔。",
    "X73n1456_049:0805c10_3": "及居東海一十二載。",
    "X73n1456_049:0805c10_4": "知命之年。",
    "X73n1456_049:0805c10_5": "乃被業風吹墮瘴鄉。",
    "X73n1456_049:0805c11_6": "將二十年。",
    "X73n1456_049:0805c11_7": "嗟乎人生幾何。",
    "X73n1456_049:0805c11_8": "忽忽往來已七十歲。",
    "X73n1456_049:0805c12_9": "浮光幻影。",
    "X73n1456_049:0805c12_10": "豈能長久。",
    "X73n1456_049:0805c12_11": "頃蒙　聖恩賜還初服。",
    "X73n1456_049:0805c13_12": "特來南嶽作投老計。",
    "X73n1456_049:0805c13_13": "因緣未偶。",
    "X73n1456_049:0805c13_14": "乃就湖東古道場地。",
    "X73n1456_049:0805c14_15": "仗諸檀越助營安居。",
    "X73n1456_049:0805c14_16": "創始於甲寅九月既望。",
    "X73n1456_049:0805c15_17": "落成於臘月逼除。",
    "X73n1456_049:0805c15_18": "草草苟完。",
    "X73n1456_049:0805c15_19": "從此一片身心。",
    "X73n1456_049:0805c15_20": "始得休息之地。",
    "X73n1456_049:0805c16_21": "如久客還家。",
    "X73n1456_049:0805c16_22": "以釋重負。",
    "X73n1456_049:0805c16_23": "其逍遙灑落何快如之。",
    "X73n1456_049:0805c17_24": "隨有口占。",
    "X73n1456_049:0805c17_25": "命侍者錄之。",
    "X73n1456_049:0805c17_26": "以志幽懷。",
    "X73n1456_049:0805c17_27": "非言詩也。",
    "X73n1456_049:0805c18_28": "興來即筆。",
    "X73n1456_049:0805c18_29": "略無次第云耳。",
    "X73n1456_049:0805c19_0": "祇園借得一枝安。",
    "X73n1456_049:0805c19_1": "從此無論道路難。",
    "X73n1456_049:0805c19_2": "日上三竿高臥穩。",
    "X73n1456_049:0805c20_3": "相看不必勸加飡。",
    "X73n1456_049:0805c21_0": "雪壓衡門夜擁爐。",
    "X73n1456_049:0805c21_1": "此身雖寄恰如無。",
    "X73n1456_049:0805c21_2": "不知日月從何去。",
    "X73n1456_049:0805c22_3": "回首人間歲已徂。",
    "X73n1456_049:0805c23_0": "灌木叢中一小菴。",
    "X73n1456_049:0805c23_1": "石牀為座草為龕。",
    "X73n1456_049:0805c23_2": "杜門口似維摩詰。",
    "X73n1456_049:0805c24_3": "莫問前三與後三。",
    "X73n1456_049:0806a01_0": "形如枯木念如灰。",
    "X73n1456_049:0806a01_1": "雪滿頭顱霜滿腮。",
    "X73n1456_049:0806a01_2": "不是老來偏厭世。",
    "X73n1456_049:0806a02_3": "眼中無處著塵埃。",
    "X73n1456_049:0806a03_0": "身心放下有餘閒。",
    "X73n1456_049:0806a03_1": "垂老生涯在萬山。",
    "X73n1456_049:0806a03_2": "不許白雲輕出谷。",
    "X73n1456_049:0806a04_3": "好隨明月護柴關。",
    "X73n1456_049:0806a05_0": "寒燈獨照影微微。",
    "X73n1456_049:0806a05_1": "踈屋風吹雪滿衣。",
    "X73n1456_049:0806a05_2": "忽憶五臺趺坐處。",
    "X73n1456_049:0806a06_3": "萬年冰裏一柴扉。",
    "X73n1456_049:0806a07_0": "寒威入骨千峰雪。",
    "X73n1456_049:0806a07_1": "怒氣衝人萬竅風。",
    "X73n1456_049:0806a07_2": "衲被蒙頭初睡醒。",
    "X73n1456_049:0806a08_3": "不知身在寂寥中。",
    "X73n1456_049:0806a09_0": "百千世界空華影。",
    "X73n1456_049:0806a09_1": "一片身心水月光。",
    "X73n1456_049:0806a09_2": "伎倆窮時消息斷。",
    "X73n1456_049:0806a10_3": "可中無處著思量。",
    "X73n1456_049:0806a11_0": "地爐無火石牀寒。",
    "X73n1456_049:0806a11_1": "瓦鼎香消坐夜殘。",
    "X73n1456_049:0806a11_2": "萬籟聲沉心更寂。",
    "X73n1456_049:0806a12_3": "却疑身在鏡中看。",
    "X73n1456_049:0806a13_0": "四圍嘉樹影扶踈。",
    "X73n1456_049:0806a13_1": "樹下深藏一小廬。",
    "X73n1456_049:0806a13_2": "車馬不聞人跡斷。",
    "X73n1456_049:0806a14_3": "閉門長日獨跏趺。",
    "X73n1456_049:0806a15_0": "寒雨瀟瀟風滿林。",
    "X73n1456_049:0806a15_1": "蓮花漏永夜沉沉。",
    "X73n1456_049:0806a15_2": "誰知舉世難醒夢。",
    "X73n1456_049:0806a16_3": "盡是光明般若心。",
    "X73n1456_049:0806a17_0": "夜深獨坐事枯禪。",
    "X73n1456_049:0806a17_1": "撥盡寒灰火不然。",
    "X73n1456_049:0806a17_2": "忽聽樓頭鐘磐發。",
    "X73n1456_049:0806a18_3": "一聲清韻滿霜天。",
    "X73n1456_049:0806a19_0": "雪滿乾坤萬象新。",
    "X73n1456_049:0806a19_1": "白銀世界裏藏身。",
    "X73n1456_049:0806a19_2": "坐來頓入光明藏。",
    "X73n1456_049:0806a20_3": "此處從來絕點塵。",
    "X73n1456_049:0806a21_0": "平湖冷浸菱荷衣。",
    "X73n1456_049:0806a21_1": "湖上青山絕是非。",
    "X73n1456_049:0806a21_2": "塵跡盡消人世遠。",
    "X73n1456_049:0806a22_3": "白雲鷗鳥總忘機。",
    "X73n1456_049:0806a23_0": "雪擁柴扉獨坐時。",
    "X73n1456_049:0806a23_1": "寒林寸寸折瓊枝。",
    "X73n1456_049:0806a23_2": "曉來頓失青山色。",
    "X73n1456_049:0806a24_3": "開盡梅花總不知。",
    "X73n1456_049:0806b01_0": "春過人日雪初晴。",
    "X73n1456_049:0806b01_1": "新月疎林影更清。",
    "X73n1456_049:0806b01_2": "夜起推窗望寥廓。",
    "X73n1456_049:0806b02_3": "滿天星斗挂簷楹。",
    "X73n1456_049:0806b03_0": "雲開四野動春光。",
    "X73n1456_049:0806b03_1": "何處梅花送暗香。",
    "X73n1456_049:0806b03_2": "曳杖欲尋幽谷去。",
    "X73n1456_049:0806b04_3": "一枝斜倚在東牆。",
    "X73n1456_049:0806b05_0": "一片雲封萬壑松。",
    "X73n1456_049:0806b05_1": "門前流水日淙淙。",
    "X73n1456_049:0806b05_2": "不分晝夜供鼾睡。",
    "X73n1456_049:0806b06_3": "好夢驚回隔嶺鐘。",
    "X73n1456_049:0806b07_0": "春深雨過落花飛。",
    "X73n1456_049:0806b07_1": "冉冉天香上衲衣。",
    "X73n1456_049:0806b07_2": "一片閒心無處著。",
    "X73n1456_049:0806b08_3": "峰頭倚杖看雲歸。",
    "X73n1456_049:0806b09_0": "信步騰騰任所從。",
    "X73n1456_049:0806b09_1": "形骸一似雪中松。",
    "X73n1456_049:0806b09_2": "偶來纔向溪頭立。",
    "X73n1456_049:0806b10_3": "又逐閒雲過別峰。",
    "X73n1456_049:0806b11_0": "麋鹿空山孰可從。",
    "X73n1456_049:0806b11_1": "輸他豐草與長松。",
    "X73n1456_049:0806b11_2": "紅塵縱有難醒夢。",
    "X73n1456_049:0806b12_3": "絕世何曾到萬峰。",
    "X73n1456_049:0806b13_0": "垂垂白髮對青山。",
    "X73n1456_049:0806b13_1": "身在千巖萬壑間。",
    "X73n1456_049:0806b13_2": "寂寂松門無過客。",
    "X73n1456_049:0806b14_3": "往來唯有白雲閒。",
    "X73n1456_049:0806b15_0": "青山不動自如如。",
    "X73n1456_049:0806b15_1": "朝暮雲霞任卷舒。",
    "X73n1456_049:0806b15_2": "縱有紅塵深萬丈。",
    "X73n1456_049:0806b16_3": "曾無一點到茅廬。",
    "X73n1456_049:0806b17_0": "萬峰深處獨跏趺。",
    "X73n1456_049:0806b17_1": "歷歷虗明一念孤。",
    "X73n1456_049:0806b17_2": "身似寒空挂明月。",
    "X73n1456_049:0806b18_3": "唯餘清影落江湖。",
    "X73n1456_049:0806b19_0": "睡起呼童旋煑茶。",
    "X73n1456_049:0806b19_1": "竹爐湯沸雪如花。",
    "X73n1456_049:0806b19_2": "旗鎗未竪魔先退。",
    "X73n1456_049:0806b20_3": "始信叢林有作家。",
    "X73n1456_049:0806b21_0": "倦倚虗窗坐看山。",
    "X73n1456_049:0806b21_1": "千峰紫翠出松間。",
    "X73n1456_049:0806b21_2": "無心縱許雲來往。",
    "X73n1456_049:0806b22_3": "何似如如體更閒。",
    "X73n1456_049:0806b23_0": "月色松聲總見聞。",
    "X73n1456_049:0806b23_1": "禪心妄想聖凡分。",
    "X73n1456_049:0806b23_2": "消歸一念無生處。",
    "X73n1456_049:0806b24_3": "此意如何把似君。",
    "X73n1456_049:0806c01_0": "平湖秋水浸寒空。",
    "X73n1456_049:0806c01_1": "古木霜飛落葉紅。",
    "X73n1456_049:0806c01_2": "石徑小橋人跡斷。",
    "X73n1456_049:0806c02_3": "一菴深鎻白雲中。",
    "X73n1456_049:0806c03_0": "寄舜菴老衲",
    "X73n1456_049:0806c04_0": "三十餘年學嬾慵。",
    "X73n1456_049:0806c04_1": "生涯坐斷祝融峰。",
    "X73n1456_049:0806c04_2": "身輕鶴骨休言老。",
    "X73n1456_049:0806c05_3": "千尺還看手種松。",
    "X73n1456_049:0806c06_0": "寄魏考叔",
    "X73n1456_049:0806c07_0": "幽居宛是在家僧。",
    "X73n1456_049:0806c07_1": "一室清如六月冰。",
    "X73n1456_049:0806c07_2": "縱使善空諸有盡。",
    "X73n1456_049:0806c08_3": "尚餘山水挂眉稜。",
    "X73n1456_049:0806c09_0": "留別湖東社中諸子二首",
    "X73n1456_049:0806c10_0": "曇花舍就竹林西。",
    "X73n1456_049:0806c10_1": "市遠塵囂最可棲。",
    "X73n1456_049:0806c10_2": "勤掃堦前雲臥地。",
    "X73n1456_049:0806c11_3": "歸來莫使草萋萋。",
    "X73n1456_049:0806c12_0": "偶來松下掩柴關。",
    "X73n1456_049:0806c12_1": "招隱相求出世間。",
    "X73n1456_049:0806c12_2": "豈意又隨流水去。",
    "X73n1456_049:0806c13_3": "別君心似戀雲山。",
    "X73n1456_049:0806c14_0": "岳陽阻風二首",
    "X73n1456_049:0806c15_0": "岳陽樓外浸湖天。",
    "X73n1456_049:0806c15_1": "樓下沙汀夜泊船。",
    "X73n1456_049:0806c15_2": "來往風帆留不住。",
    "X73n1456_049:0806c16_3": "獨餘山色尚依然。",
    "X73n1456_049:0806c17_0": "北風吹浪打山城。",
    "X73n1456_049:0806c17_1": "一葉輕帆阻去程。",
    "X73n1456_049:0806c17_2": "想為留看洞庭月。",
    "X73n1456_049:0806c18_3": "怪來偏向客邊明。",
    "X73n1456_049:0806c19_0": "過金沙於潤甫雲林",
    "X73n1456_049:0806c20_0": "咫尺雲林望不遙。",
    "X73n1456_049:0806c20_1": "到來寒爽氣蕭蕭。",
    "X73n1456_049:0806c20_2": "閉門不放烟霞出。",
    "X73n1456_049:0806c21_3": "多少塵心亦易消。",
    "X73n1456_049:0806c22_0": "西湖偶成",
    "X73n1456_049:0806c23_0": "四面湖山鏡裏看。",
    "X73n1456_049:0806c23_1": "樓船深浸碧波寒。",
    "X73n1456_049:0806c23_2": "不知身在冰壺影。",
    "X73n1456_049:0806c24_3": "可笑沈酣夢未殘。",
    "X73n1456_049:0807a01_0": "喜歸匡山",
    "X73n1456_049:0807a02_0": "垂老青山荷主恩。",
    "X73n1456_049:0807a02_1": "匡廬南向臥朝暾。",
    "X73n1456_049:0807a02_2": "七賢五老遙相對。",
    "X73n1456_049:0807a03_3": "泉響深談不二門。",
    "X73n1456_049:0807a04_0": "輓匡山黃龍徹空師二首",
    "X73n1456_049:0807a05_0": "昔與師住五臺冰雪中者三載。",
    "X73n1456_049:0807a05_1": "別來三十餘年所矣。",
    "X73n1456_049:0807a06_2": "予今投老匡山。",
    "X73n1456_049:0807a06_3": "一禮師塔。",
    "X73n1456_049:0807a06_4": "輓之以詩。",
    "X73n1456_049:0807a07_0": "憶昔清涼對坐時。",
    "X73n1456_049:0807a07_1": "垂垂冰雪綴雙眉。",
    "X73n1456_049:0807a07_2": "別來夢到傷心處。",
    "X73n1456_049:0807a08_3": "一段難禁祇自知。",
    "X73n1456_049:0807a09_0": "塔影團團擁萬松。",
    "X73n1456_049:0807a09_1": "法身不動聳千峰。",
    "X73n1456_049:0807a09_2": "知師常說無生法。",
    "X73n1456_049:0807a10_3": "鳥語溪聲和曉鍾。",
    "X73n1456_049:0807a11_0": "山中雪夜",
    "X73n1456_049:0807a12_0": "雪擁千峰獨閉關。",
    "X73n1456_049:0807a12_1": "寒燈深夜照衰顏。",
    "X73n1456_049:0807a12_2": "心灰已絕紅塵夢。",
    "X73n1456_049:0807a13_3": "誰信人間有此閒。",
    "X73n1456_049:0807a14_0": "閱華嚴經十地品夢中偶成",
    "X73n1456_049:0807a15_0": "一葉輕舟一釣竿。",
    "X73n1456_049:0807a15_1": "鈎頭香餌未曾殘。",
    "X73n1456_049:0807a15_2": "直須入海深撈摝。",
    "X73n1456_049:0807a16_3": "莫滯蘆花淺水灘。",
    "X73n1456_049:0807a17_0": "思鄉曲二首",
    "X73n1456_049:0807a18_0": "余十二歲離鄉。",
    "X73n1456_049:0807a18_1": "今六十年矣。",
    "X73n1456_049:0807a18_2": "適鄉人遠問於山中。",
    "X73n1456_049:0807a19_0": "因賦此。",
    "X73n1456_049:0807a20_0": "門前高柳映清池。",
    "X73n1456_049:0807a20_1": "常記兒童戲浴時。",
    "X73n1456_049:0807a20_2": "六十餘年如夢事。",
    "X73n1456_049:0807a21_3": "幾回猶動故園思。",
    "X73n1456_049:0807a22_0": "青山一帶遶河流。",
    "X73n1456_049:0807a22_1": "家住河邊古渡頭。",
    "X73n1456_049:0807a22_2": "自小離鄉今已老。",
    "X73n1456_049:0807a23_3": "此心不斷水悠悠。",
    "X73n1456_049:0807a24_0": "懷大都龍華主人",
    "X73n1456_049:0807b01_0": "龍華樹下有緣人。",
    "X73n1456_049:0807b01_1": "一別難求似昔親。",
    "X73n1456_049:0807b01_2": "幾度夢魂飛夜月。",
    "X73n1456_049:0807b02_3": "縱然相見總非真。",
    "X73n1456_049:0807b03_0": "入山",
    "X73n1456_049:0807b04_0": "直入千峰不厭深。",
    "X73n1456_049:0807b04_1": "最幽絕處可安心。",
    "X73n1456_049:0807b04_2": "松門任使青苔厚。",
    "X73n1456_049:0807b05_3": "從此時人沒處尋。",
    "X73n1456_049:0807b06_0": "曹溪堂主俛無昂公來訊二首",
    "X73n1456_049:0807b07_0": "自別曹溪已十春。",
    "X73n1456_049:0807b07_1": "常思香水一霑唇。",
    "X73n1456_049:0807b07_2": "夢魂時坐松陰下。",
    "X73n1456_049:0807b08_3": "只恐今生是後身。",
    "X73n1456_049:0807b09_0": "溪上梅花不斷香。",
    "X73n1456_049:0807b09_1": "幾回香霧溼衣裳。",
    "X73n1456_049:0807b09_2": "年來每到看花處。",
    "X73n1456_049:0807b10_3": "一似當時坐法堂。",
    "X73n1456_049:0807b11_0": "送青林熙公遊南嶽二首",
    "X73n1456_049:0807b12_0": "憶昔曾登七十峰。",
    "X73n1456_049:0807b12_1": "倚天傍日撫長松。",
    "X73n1456_049:0807b12_2": "幽巖絕壑探奇遍。",
    "X73n1456_049:0807b13_3": "君去尋余策杖蹤。",
    "X73n1456_049:0807b14_0": "萬峰深處碧雲寒。",
    "X73n1456_049:0807b14_1": "曾結茅廬學懶殘。",
    "X73n1456_049:0807b14_2": "牛糞尚埋煨芋火。",
    "X73n1456_049:0807b15_3": "君應一撥地爐看。",
    "X73n1456_049:0807b16_0": "偶成",
    "X73n1456_049:0807b17_0": "湛海波澄一物無。",
    "X73n1456_049:0807b17_1": "寒空深夜月輪孤。",
    "X73n1456_049:0807b17_2": "但看萬里纖雲斷。",
    "X73n1456_049:0807b18_3": "自覺冰心在玉壺。",
    "X73n1456_049:0807b19_0": "集外詩五首",
    "X73n1456_049:0807b20_0": "喜老母遣弟至",
    "X73n1456_049:0807b21_0": "天屬憐同蒂。",
    "X73n1456_049:0807b21_1": "君恩賜一身。",
    "X73n1456_049:0807b21_2": "生還如有日。",
    "X73n1456_049:0807b21_3": "尚可奉慈親。",
    "X73n1456_049:0807b22_0": "憶故鄉居",
    "X73n1456_049:0807b23_0": "家住龜山陰。",
    "X73n1456_049:0807b23_1": "宛似恒河曲。",
    "X73n1456_049:0807b23_2": "却憶兒童時。",
    "X73n1456_049:0807b23_3": "熱在河中浴夾岸柳陰濃。",
    "X73n1456_049:0807b24_4": "當戶南山翠。",
    "X73n1456_049:0807b24_5": "手種碧桃花。",
    "X73n1456_049:0807b24_6": "不知在也未門前一小橋。",
    "X73n1456_049:0807c01_7": "幼見水衝斷。",
    "X73n1456_049:0807c01_8": "欲架獨木枝。",
    "X73n1456_049:0807c01_9": "路遠猶未辦。",
    "X73n1456_049:0807c02_0": "憶鄉友",
    "X73n1456_049:0807c03_0": "幼小同讀書。",
    "X73n1456_049:0807c03_1": "連牀還共被。",
    "X73n1456_049:0807c03_2": "誰知一別來。",
    "X73n1456_049:0807c03_3": "看看六十歲。",
    "X73n1456_049:0807c04_0": "却憶聚沙時。",
    "X73n1456_049:0807c04_1": "相戲常生惱。",
    "X73n1456_049:0807c04_2": "只記童子顏。",
    "X73n1456_049:0807c04_3": "不信今衰老。",
    "X73n1456_049:0807c05_0": "憶家山菴居",
    "X73n1456_049:0807c06_0": "樓居水竹總相連。",
    "X73n1456_049:0807c06_1": "長夏清風白晝眠。",
    "X73n1456_049:0807c06_2": "此日炎荒萬里外。",
    "X73n1456_049:0807c07_3": "回思恰似幾生前。",
    "X73n1456_049:0807c07_4": "憨山老人夢遊集卷四十九"
}