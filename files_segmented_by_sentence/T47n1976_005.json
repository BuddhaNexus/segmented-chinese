[
    {
        "source_sentence": "西方合論卷之五",
        "from": "T47n1976_005:0401c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "5 理諦門第五理諦門",
        "from": "T47n1976_005:0401c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫即性即相，非有非空，理事之門不礙，遮",
        "from": "T47n1976_005:0401c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "表之詮互用。",
        "from": "T47n1976_005:0401c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言無者如水月鏡花，不同龜毛兔角；",
        "from": "T47n1976_005:0401c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言有者似風起雲行，不同金堅石礙。",
        "from": "T47n1976_005:0401c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故若滯名著相，即有漏凡夫；",
        "from": "T47n1976_005:0401c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若撥果排因，即空見外道。",
        "from": "T47n1976_005:0401c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢中佛國，咸願往生；",
        "from": "T47n1976_005:0401c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "泡影聖賢，誓同瞻仰。",
        "from": "T47n1976_005:0401c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說真說相，似完膚之加瘡；",
        "from": "T47n1976_005:0401c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道有道無，類紅鑪之點雪。",
        "from": "T47n1976_005:0401c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爰約真諦，分別四門：",
        "from": "T47n1976_005:0401c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、即相即心門。",
        "from": "T47n1976_005:0401c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　二、即心即相門。",
        "from": "T47n1976_005:0401c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三、非心非相門。",
        "from": "T47n1976_005:0401c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　四、離即離非門。",
        "from": "T47n1976_005:0401c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、即相即心門者，《淨土境觀要門》曰：",
        "from": "T47n1976_005:0401c20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「經云：",
        "from": "T47n1976_005:0401c20_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『心包太虛，量周沙界。",
        "from": "T47n1976_005:0401c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』又云：",
        "from": "T47n1976_005:0401c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『心如工畫師，造種種五陰，一切世間中，莫不從心造。",
        "from": "T47n1976_005:0401c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』是故極樂國土寶樹、寶地、寶池、彌陀海眾正報之身、三十二相等，皆是我心本具，皆是我心造作，不從他得，不向外來。",
        "from": "T47n1976_005:0401c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能了此者，方可論于即心觀佛。",
        "from": "T47n1976_005:0401c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故《觀經》云：",
        "from": "T47n1976_005:0401c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸佛如來是法界身，入一切眾生心想中。",
        "from": "T47n1976_005:0401c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』至八十隨形好句，天台大師作二義釋：",
        "from": "T47n1976_005:0401c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、約感應道交釋；",
        "from": "T47n1976_005:0401c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二、約解行相應釋。",
        "from": "T47n1976_005:0401c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無初釋，則觀非觀佛；",
        "from": "T47n1976_005:0401c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無次釋，則心外有佛。",
        "from": "T47n1976_005:0402a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至釋是心作佛、是心是佛，從修觀邊說名為心作；",
        "from": "T47n1976_005:0402a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從本具邊說名為心是，義遍初後，例合云：",
        "from": "T47n1976_005:0402a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心作日，是心是日；",
        "from": "T47n1976_005:0402a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至是心作勢至，是心是勢至，以至九品之中，隨境作觀，莫不咸然。",
        "from": "T47n1976_005:0402a05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又曰：",
        "from": "T47n1976_005:0402a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「觀心觀佛，皆屬妄境，意在了妄即真，不須破妄然後顯真。",
        "from": "T47n1976_005:0402a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故荊溪云：",
        "from": "T47n1976_005:0402a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『唯心之言，豈惟真心，須知煩惱心遍，子尚不知煩惱心遍，安能了知生死色遍。",
        "from": "T47n1976_005:0402a08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色何以遍？",
        "from": "T47n1976_005:0402a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色即心故。",
        "from": "T47n1976_005:0402a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』若爾不須攝佛歸心，方名約心觀佛，如此明之，非但深得佛意，亦乃逈出常情。",
        "from": "T47n1976_005:0402a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《宗鏡錄》曰：",
        "from": "T47n1976_005:0402a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「自心遍一切處。",
        "from": "T47n1976_005:0402a11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以若見他佛，即是自佛，不壞自他之境，惟是一心眾生。",
        "from": "T47n1976_005:0402a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如像上之模，若除模既見自佛，亦見他佛。",
        "from": "T47n1976_005:0402a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者？",
        "from": "T47n1976_005:0402a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖見他佛，即是自佛，以自鑄出故；",
        "from": "T47n1976_005:0402a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不壞他佛，以於彼本質上，雖變起他佛之形，即是自相分故。",
        "from": "T47n1976_005:0402a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又曰：",
        "from": "T47n1976_005:0402a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「自心感現佛身來迎。",
        "from": "T47n1976_005:0402a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛身常寂，無有去來；",
        "from": "T47n1976_005:0402a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生識心，託本佛功德勝力，有來有去。",
        "from": "T47n1976_005:0402a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如面鏡像，以夢施為。",
        "from": "T47n1976_005:0402a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鏡中之形，非內非外；",
        "from": "T47n1976_005:0402a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夢裡之質，非有非無，但是自心，非關佛化。",
        "from": "T47n1976_005:0402a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故知，淨業純熟，目睹佛身；",
        "from": "T47n1976_005:0402a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡果將成，心現地獄。",
        "from": "T47n1976_005:0402a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如福德之者，執礫成金；",
        "from": "T47n1976_005:0402a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業貧之人，變金成礫。",
        "from": "T47n1976_005:0402a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "礫非金而金現，金非礫而礫生。",
        "from": "T47n1976_005:0402a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金生但是心生，礫現唯從心現，轉變是我，金礫何從？",
        "from": "T47n1976_005:0402a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《正法念處經》云：",
        "from": "T47n1976_005:0402a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「黠慧善巧畫師，取種種彩色，取白作白、取赤作赤、取黃作黃，若取鴿色，則為鴿色，取黑作黑。",
        "from": "T47n1976_005:0402a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心業畫師，亦復如是。",
        "from": "T47n1976_005:0402a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣白取白，於天人中，則成白色。",
        "from": "T47n1976_005:0402a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何義名白？",
        "from": "T47n1976_005:0402a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲等漏垢所不染污，故名白色。",
        "from": "T47n1976_005:0402a29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復如是，心業畫師，取赤彩色，于天人中，能作赤色。",
        "from": "T47n1976_005:0402b01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何義名赤？",
        "from": "T47n1976_005:0402b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂愛聲味觸香色。",
        "from": "T47n1976_005:0402b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復如是，心業畫師，取黃彩色，於畜生道，能作黃色。",
        "from": "T47n1976_005:0402b03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何義名黃？",
        "from": "T47n1976_005:0402b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼此遞互飲血噉肉，貪欲嗔癡更相殺害，故名黃色。",
        "from": "T47n1976_005:0402b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復如是，心業畫師取鴿彩色，攀緣觀察，於餓鬼道作垢鴿色。",
        "from": "T47n1976_005:0402b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何義名鴿？",
        "from": "T47n1976_005:0402b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼身猶如火燒林樹，饑渴所惱，種種苦逼。",
        "from": "T47n1976_005:0402b07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復如是，心業畫師，取黑彩色，於地獄中畫作黑色。",
        "from": "T47n1976_005:0402b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何義名黑？",
        "from": "T47n1976_005:0402b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以黑業故，生地獄中，有黑鐵壁，被然被縛，得黑色身。",
        "from": "T47n1976_005:0402b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是乃至心業畫師，善治禪彩，攀緣明淨，如彼畫師，善治彩色，畫作好色，皆是自心，非他所作。",
        "from": "T47n1976_005:0402b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知心業畫師，以純淨色畫作淨土，亦復如是。",
        "from": "T47n1976_005:0402b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又如《般舟三昧》中說：",
        "from": "T47n1976_005:0402b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩得是三昧，便于是間坐，見阿彌陀佛。",
        "from": "T47n1976_005:0402b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如有人，聞毘耶離國有婬女人名菴羅婆利，舍衛國有婬女人名須曼那，王舍城婬女人名憂鉢羅槃那。",
        "from": "T47n1976_005:0402b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三人，各各聞人讚三女人，端正無比，晝夜專念，心著不捨，便于夢中，夢與從事。",
        "from": "T47n1976_005:0402b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺已心念，彼女不來，我亦不往，而婬事得辦，因是而悟：",
        "from": "T47n1976_005:0402b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸法皆如是耶？",
        "from": "T47n1976_005:0402b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往告跋陀惒菩薩，菩薩答言：",
        "from": "T47n1976_005:0402b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸法實爾，皆從念生。",
        "from": "T47n1976_005:0402b22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』如是種種為三人說，三人即得不退轉地。",
        "from": "T47n1976_005:0402b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩於是間國土，聞阿彌陀佛，數數念，用是念故，見阿彌陀佛。",
        "from": "T47n1976_005:0402b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如人遠出到他郡國，念本鄉里，家室親屬財產，其人於夢中，歸到故鄉里，見家室親屬，喜共言語，於夢中見已，覺為知識說之，我歸到故鄉里，見我家室親屬。",
        "from": "T47n1976_005:0402b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如是，其所向方聞佛名，常念所向方欲見佛，菩薩一切見佛。",
        "from": "T47n1976_005:0402c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如比丘，觀死人骨著前，有觀青時、有觀白時、有觀赤時、有觀黑時，其骨無有持來者，亦無有是骨，亦無所從來，是意所作。",
        "from": "T47n1976_005:0402c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如是，欲見何方佛即見，何以故？",
        "from": "T47n1976_005:0402c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持佛威神力、持佛三昧力、持本功德力，用是三事故得見佛。",
        "from": "T47n1976_005:0402c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如年少之人，端正姝好，以持淨器盛好麻油，及盛淨水，或新磨鏡或無瑕水精，於是自照，悉自見影。",
        "from": "T47n1976_005:0402c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0402c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以明淨故，自見其影，其影亦不從中出，亦不從外入。",
        "from": "T47n1976_005:0402c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩以善清淨心，隨意悉見諸佛。",
        "from": "T47n1976_005:0402c11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見已歡喜，作是念言：",
        "from": "T47n1976_005:0402c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『佛從何所來，我身亦不去。",
        "from": "T47n1976_005:0402c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』即時便知，佛無所從來，我亦無所去。",
        "from": "T47n1976_005:0402c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復作是念：",
        "from": "T47n1976_005:0402c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『三界所有，皆心所作。",
        "from": "T47n1976_005:0402c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0402c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心所念，悉皆得見。",
        "from": "T47n1976_005:0402c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心見佛，以心作佛，心即是佛，心即我身，心不自知，亦不自見。",
        "from": "T47n1976_005:0402c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」若取心相，悉皆無智，心亦虛誑，皆從無明出；",
        "from": "T47n1976_005:0402c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因是心相，即入諸法實相。",
        "from": "T47n1976_005:0402c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知，心外見佛，即成魔境。",
        "from": "T47n1976_005:0402c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0402c18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以心外無一法可得故。",
        "from": "T47n1976_005:0402c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二、即心即相門者，謂諸法畢竟空故，則有諸法；",
        "from": "T47n1976_005:0402c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸法有決定性者，則一切不立。",
        "from": "T47n1976_005:0402c21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《般若經》曰：",
        "from": "T47n1976_005:0402c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若諸法不空，即無道無果。",
        "from": "T47n1976_005:0402c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《法句經》曰：",
        "from": "T47n1976_005:0402c22_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩于畢竟空中，熾然建立。",
        "from": "T47n1976_005:0402c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《華嚴經》曰：",
        "from": "T47n1976_005:0402c23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩摩訶薩，了達自身及以眾生本來寂滅，而勤修福智無有厭足；",
        "from": "T47n1976_005:0402c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸境界永離貪欲，而常樂瞻奉諸佛色；",
        "from": "T47n1976_005:0402c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知佛國土皆如虛空，而常莊嚴佛剎。",
        "from": "T47n1976_005:0402c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」以是義故，菩薩樂修淨土。",
        "from": "T47n1976_005:0402c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "《群疑論》：",
        "from": "T47n1976_005:0402c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「問曰：",
        "from": "T47n1976_005:0402c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸佛國土亦復皆空，觀眾生如第五大，何得取著有相，捨此生彼？",
        "from": "T47n1976_005:0402c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』答：",
        "from": "T47n1976_005:0402c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸佛說法不離二諦。",
        "from": "T47n1976_005:0403a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云：",
        "from": "T47n1976_005:0403a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「成就一切法，而離諸法相。",
        "from": "T47n1976_005:0403a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」成就一切法者，世諦諸法也；",
        "from": "T47n1976_005:0403a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸法者，第一義諦無相也。",
        "from": "T47n1976_005:0403a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又云：",
        "from": "T47n1976_005:0403a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「雖知諸佛國，及與眾生空，常修淨土行，教化諸群生。",
        "from": "T47n1976_005:0403a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」汝但見說圓成實相之教，破遍計所執畢竟空無之文，不信說依他起性因緣之教，即是不信因果之人，說于諸法斷滅相者，是為邪見外道。",
        "from": "T47n1976_005:0403a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」又《十疑論》曰：",
        "from": "T47n1976_005:0403a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「夫不生不滅者，於生緣中，諸法和合，不守自性，求于生體亦不可得。",
        "from": "T47n1976_005:0403a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此生生時，無所從來，故名不生；",
        "from": "T47n1976_005:0403a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法散時，不守自性，此散滅時，去無所至，故言不滅。",
        "from": "T47n1976_005:0403a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非因緣生滅外別有不生不滅，亦非不求生淨土喚作無生。",
        "from": "T47n1976_005:0403a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈云：",
        "from": "T47n1976_005:0403a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『因緣所生法，我說即是空，亦名為假名，亦名中道義。",
        "from": "T47n1976_005:0403a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』又云：",
        "from": "T47n1976_005:0403a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『諸法不自生，亦不從他生，不共不無因，是故說無生。",
        "from": "T47n1976_005:0403a15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』又云：",
        "from": "T47n1976_005:0403a15_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『譬如有人，造立宮室，若依空地，隨意無礙；",
        "from": "T47n1976_005:0403a16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依虛空，終不能成。",
        "from": "T47n1976_005:0403a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』諸佛說法，常依二諦，不壞假名而說諸法實相。",
        "from": "T47n1976_005:0403a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者熾然求生淨土，達生體不可得，即是真無生，此謂心淨故佛土淨。",
        "from": "T47n1976_005:0403a19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚者為生所縛，聞生即作生解，聞無生即作無生解；",
        "from": "T47n1976_005:0403a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知生即無生，無生即生。",
        "from": "T47n1976_005:0403a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不達此理，橫想是非，嗔他求生淨土，幾許誣哉！",
        "from": "T47n1976_005:0403a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」長蘆曰：",
        "from": "T47n1976_005:0403a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「以生為生者，常見之所失也；",
        "from": "T47n1976_005:0403a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無生為無生者，斷見之所惑也。",
        "from": "T47n1976_005:0403a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生而無生，無生而生者，第一義諦也。",
        "from": "T47n1976_005:0403a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」永明曰：",
        "from": "T47n1976_005:0403a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「即相之性，用不離體；",
        "from": "T47n1976_005:0403a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即性之相，體不離用。",
        "from": "T47n1976_005:0403a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲讚性，即是讚相；",
        "from": "T47n1976_005:0403a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲毀相，祇是毀性。",
        "from": "T47n1976_005:0403a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」天如曰：",
        "from": "T47n1976_005:0403a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「性能現相，無生即生；",
        "from": "T47n1976_005:0403a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相由性現，生即無生。",
        "from": "T47n1976_005:0403a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是則無聲聲中，風枝水响；",
        "from": "T47n1976_005:0403a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非色色裹，寶樹欄干。",
        "from": "T47n1976_005:0403a29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈同灰飛煙滅之頑空，與撥無因果之魔屬哉！",
        "from": "T47n1976_005:0403b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三、非心非相門者，《婆沙論》明新發意菩薩，先念佛色相，相體相業相果相用，得下勢力；",
        "from": "T47n1976_005:0403b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次念佛四十不共法心，得中勢力；",
        "from": "T47n1976_005:0403b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次念實相佛，得上勢力，不著色法二身。",
        "from": "T47n1976_005:0403b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偈云：",
        "from": "T47n1976_005:0403b05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「不貪著色身，法身亦不著；",
        "from": "T47n1976_005:0403b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善知一切法，永寂如虛空。",
        "from": "T47n1976_005:0403b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《寶性論》曰：",
        "from": "T47n1976_005:0403b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「依佛義故。",
        "from": "T47n1976_005:0403b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云：",
        "from": "T47n1976_005:0403b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『佛告阿難言：",
        "from": "T47n1976_005:0403b07_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來者，非可見法。",
        "from": "T47n1976_005:0403b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」』是故眼識不得見故。",
        "from": "T47n1976_005:0403b08_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法義故，經云：",
        "from": "T47n1976_005:0403b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『所言法者，非可說事。",
        "from": "T47n1976_005:0403b09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』是故非耳識所聞故。",
        "from": "T47n1976_005:0403b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依僧義故，經云：",
        "from": "T47n1976_005:0403b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『所言僧者，名無為。",
        "from": "T47n1976_005:0403b10_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』是故不可身心供養禮拜讚歎故。",
        "from": "T47n1976_005:0403b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《摩訶般若經》曰：",
        "from": "T47n1976_005:0403b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩摩訶薩，念佛不以色念，不以受、想、行、識念，以諸法自性空故；",
        "from": "T47n1976_005:0403b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應以三十二相、八十隨形好念；",
        "from": "T47n1976_005:0403b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應以戒、定、慧、解脫、解脫知見而念；",
        "from": "T47n1976_005:0403b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不以十力、四無所畏、四無礙智、十八不共法而念。",
        "from": "T47n1976_005:0403b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0403b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸法自性空故。",
        "from": "T47n1976_005:0403b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性空則無所念，無所念故，是為念佛。",
        "from": "T47n1976_005:0403b17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《智度論》曰：",
        "from": "T47n1976_005:0403b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若菩薩于過去諸佛，取相分別回向，是不名回向。",
        "from": "T47n1976_005:0403b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0403b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有相是一邊，無相是一邊，離是二邊行中道，是諸佛實相。",
        "from": "T47n1976_005:0403b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說諸過去佛墮相數中，若不取相數回向，是為不顛倒。",
        "from": "T47n1976_005:0403b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」《佛藏經》曰：",
        "from": "T47n1976_005:0403b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「見諸法實相，名為見佛。",
        "from": "T47n1976_005:0403b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等名為諸法實相？",
        "from": "T47n1976_005:0403b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂諸法畢竟空無所有，以是畢竟空、無所有法念佛。",
        "from": "T47n1976_005:0403b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」乃至「又念佛者離諸想，諸想不生，心無分別，無名字、無障礙、無欲無得，不起覺觀。",
        "from": "T47n1976_005:0403b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0403b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T47n1976_005:0403b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所念起一切諸想，皆是邪見。",
        "from": "T47n1976_005:0403b27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T47n1976_005:0403b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨無所有，無覺無觀，無生無滅，通達是者，名為念佛。",
        "from": "T47n1976_005:0403b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是念中，無貪無著，無逆無順，無名無想。",
        "from": "T47n1976_005:0403b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T47n1976_005:0403b29_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無想無語，乃名念佛，是中乃至無微細小念，何況麁身口意業，無身口意業處，無取無攝，無諍無訟，無念無分別，空寂無性，滅諸覺觀，是名念佛。",
        "from": "T47n1976_005:0403c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舍利弗！",
        "from": "T47n1976_005:0403c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人成就如是念者，欲轉四天下地，隨意能轉，亦能降伏百千億魔，況弊無明，從虛誑緣起，無決定相。",
        "from": "T47n1976_005:0403c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法如是無想無戲論，無生無滅，不可說不可分別，無暗無明，魔若魔民，所不能測。",
        "from": "T47n1976_005:0403c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但以世俗言說，有所教化，而作是言：",
        "from": "T47n1976_005:0403c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『汝念佛時，莫取小想，莫生戲論，莫有分別。",
        "from": "T47n1976_005:0403c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0403c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是法皆空，無有體性，不可念，一相，所謂無相，是名真實念佛。",
        "from": "T47n1976_005:0403c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」又《止觀》明念佛三昧者，當云何念？",
        "from": "T47n1976_005:0403c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「為復念：",
        "from": "T47n1976_005:0403c12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『我當從心得佛？",
        "from": "T47n1976_005:0403c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從身得佛？",
        "from": "T47n1976_005:0403c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛不用心得，不用身得，不用心得佛色，不用色得佛心。",
        "from": "T47n1976_005:0403c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0403c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心者佛無心，色者佛無色，故不用色心得三菩提。",
        "from": "T47n1976_005:0403c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』佛色已盡，乃至識已盡，佛所說盡者，是癡人不知，智者曉了。",
        "from": "T47n1976_005:0403c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不用身口得佛，不用智慧得佛。",
        "from": "T47n1976_005:0403c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故？",
        "from": "T47n1976_005:0403c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧索不可得，自索我了不可得，亦無所見，一切法本無所有，壞本絕本。",
        "from": "T47n1976_005:0403c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」若如是念者，是名實相念佛之門，亦名絕待門。",
        "from": "T47n1976_005:0403c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四、離即離非門者，永明曰：",
        "from": "T47n1976_005:0403c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若執言內力，即是自性；",
        "from": "T47n1976_005:0403c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若言他力，即成他性；",
        "from": "T47n1976_005:0403c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若云機感相投，即是共性；",
        "from": "T47n1976_005:0403c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若云非因非緣，即無因性。",
        "from": "T47n1976_005:0403c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆滯閡執，未入圓成。",
        "from": "T47n1976_005:0403c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」當知佛力難思，玄通𥤱測。",
        "from": "T47n1976_005:0403c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如阿迦叔樹，女人摩觸，花為之出，是樹無覺觸，非無覺觸。",
        "from": "T47n1976_005:0403c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議念觸，亦復如是。",
        "from": "T47n1976_005:0403c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如象齒，因雷生花，是齒非耳，云何有聞？",
        "from": "T47n1976_005:0403c27_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無聞者，花云何生？",
        "from": "T47n1976_005:0403c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若雷能生花者，諸物應有。",
        "from": "T47n1976_005:0403c29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議聲塵，亦復如是。",
        "from": "T47n1976_005:0403c29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如勇士，疑石為虎，箭至沒鏃；",
        "from": "T47n1976_005:0404a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "箭非剋石，石非受矢，菩薩摩訶薩不思議精進，亦復如是。",
        "from": "T47n1976_005:0404a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如有人遠行，獨宿空舍，夜中有鬼，擔一死人，來著其前；",
        "from": "T47n1976_005:0404a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有一鬼，隨逐瞋罵云：",
        "from": "T47n1976_005:0404a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是我物！",
        "from": "T47n1976_005:0404a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」先鬼言：",
        "from": "T47n1976_005:0404a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「我自持來！",
        "from": "T47n1976_005:0404a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」後鬼言：",
        "from": "T47n1976_005:0404a05_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「實我擔來！",
        "from": "T47n1976_005:0404a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」二鬼各執一手爭之。",
        "from": "T47n1976_005:0404a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前鬼言：",
        "from": "T47n1976_005:0404a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「此中有人可問。",
        "from": "T47n1976_005:0404a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」後鬼即問：",
        "from": "T47n1976_005:0404a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是誰擔來？",
        "from": "T47n1976_005:0404a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是人思惟二鬼力大，妄語亦死，何若實語，即言：",
        "from": "T47n1976_005:0404a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「前鬼擔來。",
        "from": "T47n1976_005:0404a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」後鬼大嗔，捉此人手，拔斷著地；",
        "from": "T47n1976_005:0404a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前鬼取死人一臂，附之即著，如是兩臂兩脚頭脅，舉身皆易。",
        "from": "T47n1976_005:0404a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是二鬼共食所易人身，拭口而去。",
        "from": "T47n1976_005:0404a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人思惟：",
        "from": "T47n1976_005:0404a11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「眼見我身，被鬼食盡，今此我身，盡是他肉。",
        "from": "T47n1976_005:0404a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」即于一切時，作他身想，乃至五欲亦不貪著，是他身故，不應供養；",
        "from": "T47n1976_005:0404a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至妻子，亦不生染，是他身故，不應有染；",
        "from": "T47n1976_005:0404a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至種種訶斥苦辱，亦皆順受，是他身故，無復憍慢。",
        "from": "T47n1976_005:0404a16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後忽自計：",
        "from": "T47n1976_005:0404a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若是他者，不應有我；",
        "from": "T47n1976_005:0404a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若非他者，他身現在。",
        "from": "T47n1976_005:0404a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是中非他非非他，非我非非我；",
        "from": "T47n1976_005:0404a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦不可得，他亦不可得，從本已來，恒自如是。",
        "from": "T47n1976_005:0404a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」即時得知，一切法是我非我，皆為妄計。",
        "from": "T47n1976_005:0404a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議觀力，見佛自他，亦復如是。",
        "from": "T47n1976_005:0404a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如貧人商丘開，信富者言，入火不燒，入水不溺，投高不折，乃至隨諸誑語皆得實寶物，而是貧人，無他術故。",
        "from": "T47n1976_005:0404a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議貪欲，獲佛寶王，亦復如是。",
        "from": "T47n1976_005:0404a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如空谷隨聲發響，此響不從空來，不從谷來，不從聲來。",
        "from": "T47n1976_005:0404a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若從空來者，空應有響；",
        "from": "T47n1976_005:0404a26_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若從谷來者，應時時響；",
        "from": "T47n1976_005:0404a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若從聲來者，呼平地時，此響亦傳；",
        "from": "T47n1976_005:0404a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至非和合來，非因緣來，非自然來。",
        "from": "T47n1976_005:0404a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議聲相，非來非去，亦復如是。",
        "from": "T47n1976_005:0404b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如幻人幻長者所愛馬，入小瓶中，瓶不加大，而馬跳躍如常，長者為設食已，馬繫柱如故。",
        "from": "T47n1976_005:0404b03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議幻法，變現佛剎，亦復如是。",
        "from": "T47n1976_005:0404b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如訶宅迦藥，人或得之，以其一兩，變千兩銅悉成真金，非千兩銅，能變此藥。",
        "from": "T47n1976_005:0404b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議大丹，點穢成淨，亦復如是。",
        "from": "T47n1976_005:0404b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如有人得安繕那藥，以塗其目，雖行人中，人所不見。",
        "from": "T47n1976_005:0404b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議藥力，於念念生中得無生身，亦復如是。",
        "from": "T47n1976_005:0404b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如無能勝香，若以塗鼓，其聲發時，一切敵軍皆自退散；",
        "from": "T47n1976_005:0404b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又轉輪王有香名海藏，若燒一丸，王及四軍，皆騰虛空。",
        "from": "T47n1976_005:0404b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩不思議正念香，伏諸魔軍，超越三界，亦復如是。",
        "from": "T47n1976_005:0404b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故當知，念佛三昧不可思議！",
        "from": "T47n1976_005:0404b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如普賢毛孔不可思議；",
        "from": "T47n1976_005:0404b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如摩耶夫人腹不可思議；",
        "from": "T47n1976_005:0404b16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如淨名丈室不可思議；",
        "from": "T47n1976_005:0404b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如具足優婆夷小器不可思議。",
        "from": "T47n1976_005:0404b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T47n1976_005:0404b17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法皆不可思議故。",
        "from": "T47n1976_005:0404b17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有一毛頭許可思議者，即非法界性海。",
        "from": "T47n1976_005:0404b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上言心、言境、言有相、無相者，皆是思議法；",
        "from": "T47n1976_005:0404b19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若入此不思議解脫，即知一切分別念佛，皆為戲論。",
        "from": "T47n1976_005:0404b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西方合論卷之五終",
        "from": "T47n1976_005:0404b22_100",
        "context_with_next_sentence": false
    }
]