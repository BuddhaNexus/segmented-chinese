[
    {
        "source_sentence": "佛說聖最上燈明如來陀羅尼",
        "from": "T21n1355_001:0872b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經",
        "from": "T21n1355_001:0872b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天北印度烏填曩國帝釋宮寺",
        "from": "T21n1355_001:0872b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏傳法大師賜紫沙門臣施護奉　詔譯如是我聞。",
        "from": "T21n1355_001:0872b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在舍衛國祇樹給孤獨園。",
        "from": "T21n1355_001:0872b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大苾芻眾千二百五十人俱。",
        "from": "T21n1355_001:0872b29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及百千無央數人天菩薩之眾。",
        "from": "T21n1355_001:0872c01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭敬圍遶而為說法。",
        "from": "T21n1355_001:0872c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時百千俱胝佛剎皆往詣。",
        "from": "T21n1355_001:0872c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無邊花世界。",
        "from": "T21n1355_001:0872c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上燈明如來應正等覺。",
        "from": "T21n1355_001:0872c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現身住止經行說法。",
        "from": "T21n1355_001:0872c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼有二菩薩。",
        "from": "T21n1355_001:0872c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一名大光明二名無量光。",
        "from": "T21n1355_001:0872c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時彼佛遣二菩薩。",
        "from": "T21n1355_001:0872c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往娑訶世界祇樹給孤獨園。",
        "from": "T21n1355_001:0872c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣釋迦如來正遍知覺所。",
        "from": "T21n1355_001:0872c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "到已頭面禮世尊足而坐一面。",
        "from": "T21n1355_001:0872c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼二菩薩白世尊言。",
        "from": "T21n1355_001:0872c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去此佛土經行百千俱胝佛剎。",
        "from": "T21n1355_001:0872c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有世界名無邊花。",
        "from": "T21n1355_001:0872c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼土有佛。",
        "from": "T21n1355_001:0872c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名最上燈明如來應供正遍知。",
        "from": "T21n1355_001:0872c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現住其中恒說妙法。",
        "from": "T21n1355_001:0872c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼世尊最上燈明如來正遍知覺故。",
        "from": "T21n1355_001:0872c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣我等詣娑訶世界。",
        "from": "T21n1355_001:0872c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問訊世尊少病少惱。",
        "from": "T21n1355_001:0872c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何氣力輕利安住快樂。",
        "from": "T21n1355_001:0872c12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼如是說。",
        "from": "T21n1355_001:0872c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此所有人非人。",
        "from": "T21n1355_001:0872c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "部多毘舍佐藥叉羅剎。",
        "from": "T21n1355_001:0872c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供盤茶供盤茶軍主。",
        "from": "T21n1355_001:0872c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王法盜賊。",
        "from": "T21n1355_001:0872c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蛇蝎惡瘡蟲蟻羯拏怖嚩蟲。",
        "from": "T21n1355_001:0872c15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等類擾亂煩惱故。",
        "from": "T21n1355_001:0872c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼世尊最上燈明如來應供正遍知。",
        "from": "T21n1355_001:0872c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼真言章句。",
        "from": "T21n1355_001:0872c17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名聞十方故遣來此。",
        "from": "T21n1355_001:0872c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益安樂一切眾生。",
        "from": "T21n1355_001:0872c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏貌怡悅色相具足身意泰然。",
        "from": "T21n1355_001:0872c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此祕密功德力故擁護有情。",
        "from": "T21n1355_001:0872c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1355_001:0872c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他去一引入嚩二合引禮二入嚩二合引攞㜸帝三呼迦穆迦四三去麼帝麼賀引五三去麼帝六麼賀引入嚩二合引禮七入嚩二合引攞銘八薩呬薩禮九麼賀引入嚩二合引禮十塢計蘇計十一多銘三麼帝十二麼賀引三麼帝十三麼賀引三銘十四娑嚩二合引賀引十五爾時世尊告尊者阿難言。",
        "from": "T21n1355_001:0872c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1355_001:0872c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼章句甚為難得。",
        "from": "T21n1355_001:0872c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦為他解說。",
        "from": "T21n1355_001:0872c27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此阿牟尼陀羅尼。",
        "from": "T21n1355_001:0872c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出世時亦難得遇。",
        "from": "T21n1355_001:0872c28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有族姓男族姓女。",
        "from": "T21n1355_001:0872c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽聞受持為他解說。",
        "from": "T21n1355_001:0872c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命通見彼七生之中宿命之事。",
        "from": "T21n1355_001:0873a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱皆悉消除。",
        "from": "T21n1355_001:0873a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿業而皆不受。",
        "from": "T21n1355_001:0873a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀。",
        "from": "T21n1355_001:0873a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼真言章句。",
        "from": "T21n1355_001:0873a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七十七俱胝佛同共宣說。",
        "from": "T21n1355_001:0873a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切有情。",
        "from": "T21n1355_001:0873a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼章句不信毀謗者。",
        "from": "T21n1355_001:0873a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即同毀謗七十七俱胝佛。",
        "from": "T21n1355_001:0873a05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時無能勝菩薩摩訶薩。",
        "from": "T21n1355_001:0873a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從坐起偏袒右肩右膝著地。",
        "from": "T21n1355_001:0873a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌向佛白佛言。",
        "from": "T21n1355_001:0873a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我亦宣說陀羅尼真言章句。",
        "from": "T21n1355_001:0873a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益安樂諸眾生故。",
        "from": "T21n1355_001:0873a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此祕密擁護有情。",
        "from": "T21n1355_001:0873a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長殊勝福力色相怡悅故。",
        "from": "T21n1355_001:0873a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1355_001:0873a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他去引阿跓摘固反嚩跓准上切一曩跓亦准上麼賀引矩曩跓亦准上二阿乞嚩二合枲迦枲三阿曩引迦枲四麼曩迦枲五阿拏拏固反哆六佉祖引麼賀引佉祖七薩嬭奴賈反契哆嬭准上七切契八哆嚕銘九咄嚕銘十醯禮蜜禮底禮十一娑嚩二合引賀十二引爾時世尊告尊者阿難陀言。",
        "from": "T21n1355_001:0873a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1355_001:0873a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此摩尼陀羅尼章句甚為希有。",
        "from": "T21n1355_001:0873a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當受持讀誦為他解說。",
        "from": "T21n1355_001:0873a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出于世亦甚希有。",
        "from": "T21n1355_001:0873a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀。",
        "from": "T21n1355_001:0873a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若族姓男族姓女。",
        "from": "T21n1355_001:0873a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是聞此陀羅尼章句。",
        "from": "T21n1355_001:0873a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若受持諷念讀誦解說。",
        "from": "T21n1355_001:0873a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命通見彼十二生中宿命之事。",
        "from": "T21n1355_001:0873a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿業而不復受。",
        "from": "T21n1355_001:0873a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀。",
        "from": "T21n1355_001:0873a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼章句。",
        "from": "T21n1355_001:0873a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十俱胝諸佛同共宣說。",
        "from": "T21n1355_001:0873a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有毀謗此陀羅尼者。",
        "from": "T21n1355_001:0873a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為毀謗八十俱胝佛而無有異。",
        "from": "T21n1355_001:0873a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時文殊師利童子。",
        "from": "T21n1355_001:0873a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從坐起偏袒右肩右膝著地。",
        "from": "T21n1355_001:0873a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌恭敬白佛言。",
        "from": "T21n1355_001:0873a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我亦說此陀羅尼章句為利益安樂一切眾生。",
        "from": "T21n1355_001:0873a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此祕密殊勝大力擁護有情。",
        "from": "T21n1355_001:0873a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長色相身心怡悅故。",
        "from": "T21n1355_001:0873a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1355_001:0873b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合替能去一阿罽麼罽二曩爾仁際反𩕳三曩引誐囉枲四曩醯上禮五曩醯上禮六惹醯上攞贊儞七贊拏禮八贊拏上攞嚩帝九娑嚩二合引賀引十爾時世尊告尊者阿難陀言。",
        "from": "T21n1355_001:0873b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1355_001:0873b06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀此陀羅尼章句難得希有。",
        "from": "T21n1355_001:0873b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當受持讀誦為他解說。",
        "from": "T21n1355_001:0873b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀此陀羅尼章句。",
        "from": "T21n1355_001:0873b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出世時亦復希有。",
        "from": "T21n1355_001:0873b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀此陀羅尼章句。",
        "from": "T21n1355_001:0873b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有族姓男族姓女。",
        "from": "T21n1355_001:0873b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽聞受持讀誦諷念為他解說。",
        "from": "T21n1355_001:0873b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命通見彼十三生宿命之事。",
        "from": "T21n1355_001:0873b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱皆悉消除。",
        "from": "T21n1355_001:0873b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿業而皆不受。",
        "from": "T21n1355_001:0873b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀。",
        "from": "T21n1355_001:0873b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼章句。",
        "from": "T21n1355_001:0873b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十二俱胝菩薩同共宣說。",
        "from": "T21n1355_001:0873b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有毀謗此陀羅尼者。",
        "from": "T21n1355_001:0873b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為毀謗八十二俱胝菩薩而無有異。",
        "from": "T21n1355_001:0873b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告諸苾芻言。",
        "from": "T21n1355_001:0873b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦說此陀羅尼章句。",
        "from": "T21n1355_001:0873b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益安樂一切眾生。",
        "from": "T21n1355_001:0873b17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸有情福德增長。",
        "from": "T21n1355_001:0873b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心怡悅名稱普聞。",
        "from": "T21n1355_001:0873b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大勢力顏貌端正。",
        "from": "T21n1355_001:0873b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此祕密擁護故。",
        "from": "T21n1355_001:0873b19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1355_001:0873b19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合替能去一阿跓摘固反引嚩跓准上切二曩跓亦准上矩曩跓准上三姹計姹囉計四多嚕吠覩嚕吠五囉吒吠六𡀔去引禮魯禮七賀禮蜜禮八底禮始禮九尸里上含禮十阿普嚩普十一曩普矩曩恥十二阿曩跛底丁以反十三嚩曩跛底准上切計枲計枲計枲十四姹輕呼枲姹枲姹枲十五麼賀引姹枲娑嚩二合引賀引十六爾時世尊告尊者阿難陀言。",
        "from": "T21n1355_001:0873b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今帝聽阿難受持此陀羅尼章句。",
        "from": "T21n1355_001:0873b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦諷念為他解說。",
        "from": "T21n1355_001:0873b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀此陀羅尼章句甚為希有。",
        "from": "T21n1355_001:0873b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀此阿牟尼陀羅尼章句。",
        "from": "T21n1355_001:0873c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出世時亦甚希有。",
        "from": "T21n1355_001:0873c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀若族姓男族姓女。",
        "from": "T21n1355_001:0873c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽聞受持為他解說。",
        "from": "T21n1355_001:0873c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命通見彼十四生中宿命之事。",
        "from": "T21n1355_001:0873c03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱皆悉消除。",
        "from": "T21n1355_001:0873c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿業而皆不受。",
        "from": "T21n1355_001:0873c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀此陀羅尼章句。",
        "from": "T21n1355_001:0873c05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八十四俱胝佛同共宣說。",
        "from": "T21n1355_001:0873c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有毀謗此陀羅尼者。",
        "from": "T21n1355_001:0873c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為毀謗八十四俱胝佛而無有異。",
        "from": "T21n1355_001:0873c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀若有族姓男族姓女。",
        "from": "T21n1355_001:0873c07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於枯朽樹下以此陀羅尼章句若讀若誦。",
        "from": "T21n1355_001:0873c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "潛護救濟火不能燒。",
        "from": "T21n1355_001:0873c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼枯樹重生枝葉花菓敷榮。",
        "from": "T21n1355_001:0873c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況受持之人。",
        "from": "T21n1355_001:0873c10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復告諸苾芻言。",
        "from": "T21n1355_001:0873c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今重說陀羅尼章句。",
        "from": "T21n1355_001:0873c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為利益安樂一切眾生。",
        "from": "T21n1355_001:0873c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顏貌怡悅名稱普聞。",
        "from": "T21n1355_001:0873c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福德增長色相端嚴。",
        "from": "T21n1355_001:0873c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此祕密擁護故。",
        "from": "T21n1355_001:0873c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1355_001:0873c13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合替能去一阿跓摘固反嚩跓亦准上二姹計姹囉計三多嚕跛底四覩嚕跛底五覩嚕蜜底六覩嚕蜜蜜底七覩嚕覩㘑八蘇㘑醯禮九母禮底禮十娑嚩二合引賀引十一爾時世尊告尊者阿難陀言。",
        "from": "T21n1355_001:0873c18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1355_001:0873c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼章句甚為希有。",
        "from": "T21n1355_001:0873c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等受持讀誦為他解說。",
        "from": "T21n1355_001:0873c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀此阿牟尼陀羅尼佛出于世亦甚希有。",
        "from": "T21n1355_001:0873c21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀若族姓男族姓女。",
        "from": "T21n1355_001:0873c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼章句。",
        "from": "T21n1355_001:0873c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦為他解說。",
        "from": "T21n1355_001:0873c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得宿命通見彼二十一生宿命之事。",
        "from": "T21n1355_001:0873c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱皆悉消除。",
        "from": "T21n1355_001:0873c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切宿業而皆不受。",
        "from": "T21n1355_001:0873c24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復擁護所有一切部多。",
        "from": "T21n1355_001:0873c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天龍藥叉犍闥嚩阿蘇囉㜸嚕茶緊那羅麼護囉誐人非人不能侵害。",
        "from": "T21n1355_001:0873c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切惡瘡蛇蟲羯拏婆蟲亦不能為害。",
        "from": "T21n1355_001:0873c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復無彼一切瘧病風黃痰癊。",
        "from": "T21n1355_001:0873c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等病須臾發動。",
        "from": "T21n1355_001:0873c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至一日二日三日四日。",
        "from": "T21n1355_001:0873c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至七日半月一月一年。",
        "from": "T21n1355_001:0873c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長時不能侵害。",
        "from": "T21n1355_001:0874a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復無彼一切瘡腫癰疽痑緩疥癩瘡癬。",
        "from": "T21n1355_001:0874a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切病惱一切業障一切厭禱。",
        "from": "T21n1355_001:0874a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及一切吠跢茶皆不能侵害。",
        "from": "T21n1355_001:0874a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀此陀羅尼章句。",
        "from": "T21n1355_001:0874a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九十九俱胝佛同共宣說。",
        "from": "T21n1355_001:0874a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有毀謗此陀羅尼者。",
        "from": "T21n1355_001:0874a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為毀謗九十九俱胝佛而無有異。",
        "from": "T21n1355_001:0874a06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀此陀羅尼章句。",
        "from": "T21n1355_001:0874a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入王宮時憶念。",
        "from": "T21n1355_001:0874a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入羅剎中時憶念。",
        "from": "T21n1355_001:0874a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入師子虎狼中時憶念。",
        "from": "T21n1355_001:0874a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入曠野中時憶念。",
        "from": "T21n1355_001:0874a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入暴惡河中時憶念。",
        "from": "T21n1355_001:0874a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為水火難時憶念。",
        "from": "T21n1355_001:0874a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為毒藥所中時憶念。",
        "from": "T21n1355_001:0874a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切怖畏時憶念。",
        "from": "T21n1355_001:0874a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不能為害。",
        "from": "T21n1355_001:0874a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次阿難陀。",
        "from": "T21n1355_001:0874a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有受持此陀羅尼者。",
        "from": "T21n1355_001:0874a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若遇惡人執持刀棒。",
        "from": "T21n1355_001:0874a11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋怒逼趁欲來傷害。",
        "from": "T21n1355_001:0874a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼持刀棒自然碎折而得解脫。",
        "from": "T21n1355_001:0874a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀我意觀見人間天上。",
        "from": "T21n1355_001:0874a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及魔羅梵天沙門天人阿蘇囉眾中。",
        "from": "T21n1355_001:0874a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以此陀羅尼真言章句。",
        "from": "T21n1355_001:0874a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護救濟結界守護。",
        "from": "T21n1355_001:0874a15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "息除災難無越此陀羅尼者。",
        "from": "T21n1355_001:0874a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T21n1355_001:0874a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀此阿牟尼陀羅尼。",
        "from": "T21n1355_001:0874a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持護念一切煩惱悉皆消除。",
        "from": "T21n1355_001:0874a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四大天王白世尊言。",
        "from": "T21n1355_001:0874a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此正法滅時。",
        "from": "T21n1355_001:0874a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等與彼正法助威神力。",
        "from": "T21n1355_001:0874a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣宣流布令法久住。",
        "from": "T21n1355_001:0874a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼受持法師我亦加護。",
        "from": "T21n1355_001:0874a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遣除一切魔羅。",
        "from": "T21n1355_001:0874a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊讚言。",
        "from": "T21n1355_001:0874a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉四大天王。",
        "from": "T21n1355_001:0874a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發勇猛慈而護正法。",
        "from": "T21n1355_001:0874a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時四大天王知其佛意。",
        "from": "T21n1355_001:0874a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦從坐起說陀羅尼曰。",
        "from": "T21n1355_001:0874a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛儞也二合他去引一吠難去膩吠難去膩二麼賀引難去膩三娑檐二合婆去𩕳四染引婆去𩕳五吒吒𩕳吒吒𩕳六麼賀引吒吒𩕳七矩跓摘固反矩跓准上𩕳八麼賀引矩吒九達轉舌麼禮瑳麼呬上娑嚩二合引賀引十世尊言。",
        "from": "T21n1355_001:0874a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有族姓男族姓女。",
        "from": "T21n1355_001:0874a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得聞此陀羅尼章句。",
        "from": "T21n1355_001:0874a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解說彼明句義受持讀誦。",
        "from": "T21n1355_001:0874a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切煩惱悉皆消除。",
        "from": "T21n1355_001:0874b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切世間得無障礙。",
        "from": "T21n1355_001:0874b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如持一切妙法。",
        "from": "T21n1355_001:0874b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時世尊告四天王言。",
        "from": "T21n1355_001:0874b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉如汝所願令法久住。",
        "from": "T21n1355_001:0874b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告阿難陀言。",
        "from": "T21n1355_001:0874b03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽。",
        "from": "T21n1355_001:0874b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正法受持讀誦為他解說。",
        "from": "T21n1355_001:0874b04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼有情得大福德名稱普聞。",
        "from": "T21n1355_001:0874b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀言。",
        "from": "T21n1355_001:0874b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯然世尊。",
        "from": "T21n1355_001:0874b05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聽聞我專記憶。",
        "from": "T21n1355_001:0874b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊以真實之義。",
        "from": "T21n1355_001:0874b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方便開示而說偈言。",
        "from": "T21n1355_001:0874b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此經陀羅尼　　過去諸佛說",
        "from": "T21n1355_001:0874b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今亦說此　　真言章句義",
        "from": "T21n1355_001:0874b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼聽受持　　利益諸眾生",
        "from": "T21n1355_001:0874b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見二十一生　　種種宿命事",
        "from": "T21n1355_001:0874b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無彼人非人　　藥叉供盤茶",
        "from": "T21n1355_001:0874b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅剎布怛曩　　而作諸障難",
        "from": "T21n1355_001:0874b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宣示陀羅尼　　所欲皆自在",
        "from": "T21n1355_001:0874b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔羅罪業等　　障難自消除",
        "from": "T21n1355_001:0874b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說彼陀羅尼　　父母與兄弟",
        "from": "T21n1355_001:0874b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知識及眷屬　　惡事不能害",
        "from": "T21n1355_001:0874b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持陀羅尼　　曠野道路中",
        "from": "T21n1355_001:0874b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子虎狼等　　不能為怖畏",
        "from": "T21n1355_001:0874b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦陀羅尼　　百千俱胝劫",
        "from": "T21n1355_001:0874b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿作諸罪業　　七日盡消除",
        "from": "T21n1355_001:0874b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解說陀羅尼　　七日得一切",
        "from": "T21n1355_001:0874b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩之福德　　俱胝劫不盡",
        "from": "T21n1355_001:0874b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令此陀羅尼　　常有四天王",
        "from": "T21n1355_001:0874b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持國與多聞　　增長及廣目",
        "from": "T21n1355_001:0874b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "領自一切眾　　色相具威神",
        "from": "T21n1355_001:0874b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護於四方　　及持真言者",
        "from": "T21n1355_001:0874b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說此陀羅尼章句已。",
        "from": "T21n1355_001:0874b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀及大聲聞眾。",
        "from": "T21n1355_001:0874b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩文殊師利菩薩摩訶薩。",
        "from": "T21n1355_001:0874b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四大天王及天人阿蘇囉乾闥婆等。",
        "from": "T21n1355_001:0874c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說一心受持。",
        "from": "T21n1355_001:0874c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜踴躍作禮而退。",
        "from": "T21n1355_001:0874c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說聖最上燈明如來陀羅尼經",
        "from": "T21n1355_001:0874c03_100",
        "context_with_next_sentence": false
    }
]