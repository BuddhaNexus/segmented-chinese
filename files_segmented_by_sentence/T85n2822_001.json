[
    {
        "source_sentence": "大乘要語一卷",
        "from": "T85n2822_001:1205c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水油同形非農人不識喻真妄來時見事生見心",
        "from": "T85n2822_001:1205c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生去時事不現。明了知來去。依相不分別。師",
        "from": "T85n2822_001:1205c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "子獸中王逐人不逐塵塊識微細種子喻菩薩能斷第八識斷集如犬逐塵塊不逐人滅前六識不見第七八識菩提之心靜慮如毛頭許莬毛佛性非有如虛空仁王云。",
        "from": "T85n2822_001:1206a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波羅蜜非似虛空常住非無知如菟角似莬角柏不諦不是也譬如二象覺力如□忽一被傷退初心人心雖覺却而不復伏心起利心復起不礙放喻起覺師子獨行驅六賊禪師喻第六意識兼前五識。",
        "from": "T85n2822_001:1206a06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻中六賊禪師。",
        "from": "T85n2822_001:1206a06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喻恚人滅第六意識不行前五識射殺五平王喻五蘊五根名平王又問。",
        "from": "T85n2822_001:1206a07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石女兒有兒否。",
        "from": "T85n2822_001:1206a07_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "T85n2822_001:1206a07_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石女兒不解生道無耶。",
        "from": "T85n2822_001:1206a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有兒何處去也。",
        "from": "T85n2822_001:1206a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "T85n2822_001:1206a08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作峯子。",
        "from": "T85n2822_001:1206a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何處作峯子去。",
        "from": "T85n2822_001:1206a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾闥婆城裏作峯子得何軍器糧食。",
        "from": "T85n2822_001:1206a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "T85n2822_001:1206a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將龜毛箭兔角弓水聚沫作糧食去也。",
        "from": "T85n2822_001:1206a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在乾闥婆城東西南北何角作峰子。",
        "from": "T85n2822_001:1206a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答。",
        "from": "T85n2822_001:1206a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四角並不坐當心坐耶。",
        "from": "T85n2822_001:1206a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四角總不坐當心。",
        "from": "T85n2822_001:1206a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更誰坐耶。",
        "from": "T85n2822_001:1206a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩商人。",
        "from": "T85n2822_001:1206a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貿易之處。",
        "from": "T85n2822_001:1206a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提心者。",
        "from": "T85n2822_001:1206a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "市肆而歸。",
        "from": "T85n2822_001:1206a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲漏不先除眼等貪者著名之為欲。",
        "from": "T85n2822_001:1206a14_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即此欲者便是漏畜文成過誤畜等者不了法人色聲觸著便礙。",
        "from": "T85n2822_001:1206a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了人色聲芽是等將文治佛佛何不自聞。",
        "from": "T85n2822_001:1206a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞難陀世尊訶喻阿無依一精明第六心分成六和合。",
        "from": "T85n2822_001:1206a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一處停休息保六用皆不成喻心迷時悟心心不異。",
        "from": "T85n2822_001:1206a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "只為有心心有異。",
        "from": "T85n2822_001:1206a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將心覓佛歷僧祇受心若不起各別故不一。",
        "from": "T85n2822_001:1206a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體同故不異空手携鋤鉤。",
        "from": "T85n2822_001:1206a19_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步行騎水牛。",
        "from": "T85n2822_001:1206a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "騎牛水上過橋流水不流。",
        "from": "T85n2822_001:1206a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青青翠柳遍真如喻無情欝欝黃花無非般若喻有情思覺不相違病相盡藥不起還飛不覺相違者有起時覺不立。",
        "from": "T85n2822_001:1206a22_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不相違者即覺去即不立二相。",
        "from": "T85n2822_001:1206a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五法名相分別正智如若見是物汝是可見吾知見。",
        "from": "T85n2822_001:1206a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若同見者名為見吾。",
        "from": "T85n2822_001:1206a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾若不見時何不見吾知見。",
        "from": "T85n2822_001:1206a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見不見自然非比。",
        "from": "T85n2822_001:1206a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是日。",
        "from": "T85n2822_001:1206a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞伏翳根除。",
        "from": "T85n2822_001:1206a26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塵溑覺圓淨。",
        "from": "T85n2822_001:1206a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨極光通達。",
        "from": "T85n2822_001:1206a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂照合虛空。",
        "from": "T85n2822_001:1206a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却來觀世間。",
        "from": "T85n2822_001:1206a27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如夢中事此是聞唯覺所明阿難陀心是覺稱名明覺儞。",
        "from": "T85n2822_001:1206b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為覺不明稱名明覺。",
        "from": "T85n2822_001:1206b01_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若覺不名稱名覺者則無無明不是無始煩惱有所即非覺。",
        "from": "T85n2822_001:1206b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明即非名無明。",
        "from": "T85n2822_001:1206b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有非覺甚明性。",
        "from": "T85n2822_001:1206b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知唯識現不知夜見㗛鬼蛇形無鬼地離於心所得不悟不依心所得分別不現前悟離依心得亦不住其性不悟分別悟不分別。",
        "from": "T85n2822_001:1206b05_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "住無為心五蔭叢林蜜。",
        "from": "T85n2822_001:1206b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真如土地平喻眾生一雲垂雨露。",
        "from": "T85n2822_001:1206b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三草競分明戒定惠渾渾常不濁。",
        "from": "T85n2822_001:1206b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄澄復不清。",
        "from": "T85n2822_001:1206b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清濁合不合。",
        "from": "T85n2822_001:1206b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故號生無生。",
        "from": "T85n2822_001:1206b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一覺是本覺理一覺者豈則是覺未知本覺者本覺者不生不滅。",
        "from": "T85n2822_001:1206b09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟理由同也如比得金錢去處則覺者即是本所用。",
        "from": "T85n2822_001:1206b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身中得金錢也所得亦非得非是他人得空生大覺中空者是覺。",
        "from": "T85n2822_001:1206b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大覺者是佛如海藻發大覺從空中約大海浮藻發眼耳等六種有漏微塵國微塵者色聲六種皆從空處生皆從空等者並從妄念中生漚滅空本無。",
        "from": "T85n2822_001:1206b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復諸三有諸三有者地微等有時即無若法生時法正生時令滅無見令滅無見。",
        "from": "T85n2822_001:1206b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法滅時令滅有見若法滅時令滅有見。",
        "from": "T85n2822_001:1206b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無見自生然不生。",
        "from": "T85n2822_001:1206b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心用性緣理是真淨心者去也。",
        "from": "T85n2822_001:1206b16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性者清淨性。",
        "from": "T85n2822_001:1206b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣者六塵境界。",
        "from": "T85n2822_001:1206b16_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真淨者不生滅理也性用心不可性者悟法之人不可滅心數法毀壞照真金真金者心心等習氣不離心。",
        "from": "T85n2822_001:1206b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心亦不似心俱習者煩惱。",
        "from": "T85n2822_001:1206b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心者性也。",
        "from": "T85n2822_001:1206b18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即氣不離心。",
        "from": "T85n2822_001:1206b18_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心共習等亦不是一習氣縳纏須臾習所前。",
        "from": "T85n2822_001:1206b19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其體無差別眾生心者清淨性結解同所因結者解也。",
        "from": "T85n2822_001:1206b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即繩礙中解聖凡無二路不悟者聖凡路別。",
        "from": "T85n2822_001:1206b20_27",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟者即凡聖是一。",
        "from": "T85n2822_001:1206b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修門人有時不有未犯五蘊有地虛如觀茇中性。",
        "from": "T85n2822_001:1206b21_23",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空有二俱非　覺不堅為堅。",
        "from": "T85n2822_001:1206b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善住於顛倒主方便蘇去說覺。",
        "from": "T85n2822_001:1206b22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺不堅忍堅。",
        "from": "T85n2822_001:1206b22_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟覺任倒極煩惱所惱。",
        "from": "T85n2822_001:1206b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得成無上道。",
        "from": "T85n2822_001:1206b23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因緣所生法。",
        "from": "T85n2822_001:1206b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是義滅非生猶如椽木父國林緣必竟滅滅諸生滅義。",
        "from": "T85n2822_001:1206b25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是義生非滅。",
        "from": "T85n2822_001:1206b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等見聞。",
        "from": "T85n2822_001:1206b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣無異生。",
        "from": "T85n2822_001:1206b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六塵皆曰有相異生。",
        "from": "T85n2822_001:1206b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "性中相知。",
        "from": "T85n2822_001:1206c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用中相皆。",
        "from": "T85n2822_001:1206c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同二異失准。",
        "from": "T85n2822_001:1206c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將知妄聲相成。",
        "from": "T85n2822_001:1206c01_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若知前念是病。",
        "from": "T85n2822_001:1206c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令不起後念。",
        "from": "T85n2822_001:1206c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起後念。",
        "from": "T85n2822_001:1206c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同還不覺。",
        "from": "T85n2822_001:1206c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發心畢竟二不別。",
        "from": "T85n2822_001:1206c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是二心先心難。",
        "from": "T85n2822_001:1206c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初發以為天人師。",
        "from": "T85n2822_001:1206c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝出聲聞及緣覺。",
        "from": "T85n2822_001:1206c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩清涼月。",
        "from": "T85n2822_001:1206c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊於畢竟空。",
        "from": "T85n2822_001:1206c05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生心水淨。",
        "from": "T85n2822_001:1206c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提影現中。",
        "from": "T85n2822_001:1206c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身是菩提樹。",
        "from": "T85n2822_001:1206c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心是明鏡臺。",
        "from": "T85n2822_001:1206c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時時拂力下。",
        "from": "T85n2822_001:1206c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不備若塵埃。",
        "from": "T85n2822_001:1206c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無樹而有影譬如虛空中風衢以鳥跡。",
        "from": "T85n2822_001:1206c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此見悉為難。",
        "from": "T85n2822_001:1206c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能遣及所造。",
        "from": "T85n2822_001:1206c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色亦非色法。",
        "from": "T85n2822_001:1206c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於彼見如來。",
        "from": "T85n2822_001:1206c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其難亦如是。",
        "from": "T85n2822_001:1206c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹上千般葉。",
        "from": "T85n2822_001:1206c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根從空處生。",
        "from": "T85n2822_001:1206c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風吹葉不動。",
        "from": "T85n2822_001:1206c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日照競分明。",
        "from": "T85n2822_001:1206c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲得明明見。",
        "from": "T85n2822_001:1206c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯須見理明見生死喧雜。",
        "from": "T85n2822_001:1206c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃寂靜。",
        "from": "T85n2822_001:1206c11_25",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見生死不喧雜。",
        "from": "T85n2822_001:1206c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "涅槃不靜如人覺賊不能違。",
        "from": "T85n2822_001:1206c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "調伏難調伏解脫魔所縛。",
        "from": "T85n2822_001:1206c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "超然路地坐識蔭般涅槃。",
        "from": "T85n2822_001:1206c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覺海性澄圓。",
        "from": "T85n2822_001:1206c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄圓覺無妙。",
        "from": "T85n2822_001:1206c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無明照生死所又立見所望亡。",
        "from": "T85n2822_001:1206c15_8",
        "context_with_next_sentence": true
    }
]