[
    {
        "source_sentence": "觀心論并序亦名煎乳論",
        "from": "T46n1920_001:0584b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天台修禪寺沙門智者述",
        "from": "T46n1920_001:0584b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。佛經無量。論亦甚多。弘法之人詵詵蓋",
        "from": "T46n1920_001:0584b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世。",
        "from": "T46n1920_001:0584b08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽受之眾無處不有。",
        "from": "T46n1920_001:0584b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則法雨普津四眾。",
        "from": "T46n1920_001:0584b08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露潤利益無邊。",
        "from": "T46n1920_001:0584b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何所見聞。",
        "from": "T46n1920_001:0584b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更何利益而造斯論。",
        "from": "T46n1920_001:0584b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "T46n1920_001:0584b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如所問言。",
        "from": "T46n1920_001:0584b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛經無量論亦甚多。",
        "from": "T46n1920_001:0584b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是事共知。",
        "from": "T46n1920_001:0584b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但弘法之人為利物故多施加水之乳。",
        "from": "T46n1920_001:0584b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致令聽受之者失真道味。",
        "from": "T46n1920_001:0584b12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾轉就澆離。",
        "from": "T46n1920_001:0584b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致使信心之者漸歇薄談。",
        "from": "T46n1920_001:0584b13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將恐深廣大法不久停留。",
        "from": "T46n1920_001:0584b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生眼滅失正法利。",
        "from": "T46n1920_001:0584b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以閑生悲傷煩究難忍。",
        "from": "T46n1920_001:0584b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惟凡淺寡聞少見。",
        "from": "T46n1920_001:0584b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲助鸚鵡。",
        "from": "T46n1920_001:0584b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奮其翅力。",
        "from": "T46n1920_001:0584b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒承三寶力。",
        "from": "T46n1920_001:0584b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲作斯論也。",
        "from": "T46n1920_001:0584b16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問者欲知作論者。",
        "from": "T46n1920_001:0584b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大意有二。",
        "from": "T46n1920_001:0584b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者自責為諸學徒。",
        "from": "T46n1920_001:0584b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者外諸四眾脫能信受亦可傳之。",
        "from": "T46n1920_001:0584b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略以偈答曰。",
        "from": "T46n1920_001:0584b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師將涅槃　　慈父有遺屬",
        "from": "T46n1920_001:0584b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四念處修道　　當依木叉住",
        "from": "T46n1920_001:0584b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等非佛子　　不念此遺屬",
        "from": "T46n1920_001:0584b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘緩內無道　　戒緩懼三途",
        "from": "T46n1920_001:0584b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由不問觀心　　令他信漸薄",
        "from": "T46n1920_001:0584b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏鴉不施道　　豈報白鴉恩",
        "from": "T46n1920_001:0584b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非但田不良　　無平等種子",
        "from": "T46n1920_001:0584b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法雨若不降　　法種必燋枯",
        "from": "T46n1920_001:0584b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各無來世糧　　失三利致苦",
        "from": "T46n1920_001:0584b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大法將欲頹　　哀哉見此事",
        "from": "T46n1920_001:0584b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0584c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等真法界　　無行無能到",
        "from": "T46n1920_001:0584c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能問觀心　　能行亦能到",
        "from": "T46n1920_001:0584c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是四念處　　能依木叉戒",
        "from": "T46n1920_001:0584c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘急內有道　　戒急生人天",
        "from": "T46n1920_001:0584c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是真佛子　　不乖慈父屬",
        "from": "T46n1920_001:0584c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍皆慶喜　　一切豈不欣",
        "from": "T46n1920_001:0584c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能報白鴉恩　　普施烏鴉食",
        "from": "T46n1920_001:0584c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既有好良田　　有平等種子",
        "from": "T46n1920_001:0584c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法雨應時降　　法種皆生長",
        "from": "T46n1920_001:0584c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各有未來資　　俱獲三利益",
        "from": "T46n1920_001:0584c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0584c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　欲聞無上道",
        "from": "T46n1920_001:0584c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　聞慧終不發",
        "from": "T46n1920_001:0584c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　欲思無上道",
        "from": "T46n1920_001:0584c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　思慧終不生",
        "from": "T46n1920_001:0584c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　欲修無上道",
        "from": "T46n1920_001:0584c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　修慧終不成",
        "from": "T46n1920_001:0584c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　欲修四三昧",
        "from": "T46n1920_001:0584c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　困苦無所獲",
        "from": "T46n1920_001:0584c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　多聽得言語",
        "from": "T46n1920_001:0584c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　未得真實樂",
        "from": "T46n1920_001:0584c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　修三昧得定",
        "from": "T46n1920_001:0584c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　盲禪無所見",
        "from": "T46n1920_001:0584c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　欲懺悔眾罪",
        "from": "T46n1920_001:0584c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　罪終難得脫",
        "from": "T46n1920_001:0584c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　意欲離煩惱",
        "from": "T46n1920_001:0584c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　煩惱終不滅",
        "from": "T46n1920_001:0584c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　本為利益他",
        "from": "T46n1920_001:0584c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　退轉令他謗",
        "from": "T46n1920_001:0585a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸來求法者　　欲興顯佛法",
        "from": "T46n1920_001:0585a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　退還大行損",
        "from": "T46n1920_001:0585a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此眾得失　　非偈可具陳",
        "from": "T46n1920_001:0585a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有此諸得失　　無人覺悟者",
        "from": "T46n1920_001:0585a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末代修觀心　　得邪定發見",
        "from": "T46n1920_001:0585a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯才無窮盡　　自謂人間寶",
        "from": "T46n1920_001:0585a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無知者鼻嗅　　野孤氣衝眼",
        "from": "T46n1920_001:0585a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉尾共脚行　　次第墮坑殞",
        "from": "T46n1920_001:0585a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守鼻隔安般　　及修不淨觀",
        "from": "T46n1920_001:0585a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安般得四禪　　不免泥梨業",
        "from": "T46n1920_001:0585a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不淨謂無學　　覆鉢受女飯",
        "from": "T46n1920_001:0585a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設得隨禪生　　墮長壽天難",
        "from": "T46n1920_001:0585a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依事法用心　　無慧發鬼定",
        "from": "T46n1920_001:0585a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯異動物心　　事發壞佛法",
        "from": "T46n1920_001:0585a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終生鬼道　　九十五眷屬",
        "from": "T46n1920_001:0585a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "像法決疑明　　三師破佛法",
        "from": "T46n1920_001:0585a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內心不為道　　邪諂念名利",
        "from": "T46n1920_001:0585a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詐現禪坐相　　得名利眷屬",
        "from": "T46n1920_001:0585a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事發壞他心　　毀損佛正法",
        "from": "T46n1920_001:0585a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是扇提羅　　死墮無間獄",
        "from": "T46n1920_001:0585a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說法得解脫　　聽法眾亦然",
        "from": "T46n1920_001:0585a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　如貧數他寶",
        "from": "T46n1920_001:0585a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說者問觀心　　無說則無示",
        "from": "T46n1920_001:0585a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽者問觀心　　無問亦無得",
        "from": "T46n1920_001:0585b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒為制心馬　　雖持五部律",
        "from": "T46n1920_001:0585b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不知問觀心　　心馬終不調",
        "from": "T46n1920_001:0585b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "律住持佛法　　解外不解內",
        "from": "T46n1920_001:0585b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨名呵上首　　乃名真奉律",
        "from": "T46n1920_001:0585b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦經得解脫　　非為世財利",
        "from": "T46n1920_001:0585b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能問觀心　　破一微塵中",
        "from": "T46n1920_001:0585b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出大千經卷　　受持讀誦此",
        "from": "T46n1920_001:0585b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞持無遺忘　　心開得解脫",
        "from": "T46n1920_001:0585b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀他修供養　　興顯安行人",
        "from": "T46n1920_001:0585b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密心為自利　　猗託以資身",
        "from": "T46n1920_001:0585b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞他喜捨善　　駝驢以償人",
        "from": "T46n1920_001:0585b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能問觀心　　即如駝驃也",
        "from": "T46n1920_001:0585b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸道各有法　　了不自尋研",
        "from": "T46n1920_001:0585b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽窺𨵦釋教　　動經十數年",
        "from": "T46n1920_001:0585b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非但彼法拙　　亦有謀壞心",
        "from": "T46n1920_001:0585b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是迦毘梨　　仙聖豈聽然",
        "from": "T46n1920_001:0585b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴而無道　　多增長憍逸",
        "from": "T46n1920_001:0585b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能問觀心　　得真法富貴",
        "from": "T46n1920_001:0585b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖高而不危　　雖滿而不溢",
        "from": "T46n1920_001:0585b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不著世富貴　　心常在道法",
        "from": "T46n1920_001:0585b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧賤多姦諂　　窺𨵦造眾惡",
        "from": "T46n1920_001:0585b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現被王法治　　死墮三惡道",
        "from": "T46n1920_001:0585b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能問觀心　　即安貪養道",
        "from": "T46n1920_001:0585c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有道即真貴　　無為即富樂",
        "from": "T46n1920_001:0585c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四眾皆佛子　　無非是法親",
        "from": "T46n1920_001:0585c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因執善法諍　　遂結未來怨",
        "from": "T46n1920_001:0585c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能問觀心　　和合如水乳",
        "from": "T46n1920_001:0585c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆師子之子　　悉是旃檀林",
        "from": "T46n1920_001:0585c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "年衰身帶病　　眼闇耳漸聾",
        "from": "T46n1920_001:0585c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心昏多忘漏　　年不如一年",
        "from": "T46n1920_001:0585c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死王金翅鳥　　不久吞命根",
        "from": "T46n1920_001:0585c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一旦業繩斷　　氣絕豈能言",
        "from": "T46n1920_001:0585c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是因緣故　　須造觀心論",
        "from": "T46n1920_001:0585c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首十方佛　　深悲觀心者",
        "from": "T46n1920_001:0585c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸善諦觀察　　發正覺妙樂",
        "from": "T46n1920_001:0585c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首十方法　　深悲觀心者",
        "from": "T46n1920_001:0585c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸善諦觀察　　得真法免苦",
        "from": "T46n1920_001:0585c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首十方僧　　若能善觀察",
        "from": "T46n1920_001:0585c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入大和合海　　歡喜心無量",
        "from": "T46n1920_001:0585c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首龍樹師　　願加觀心者",
        "from": "T46n1920_001:0585c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令速得開曉　　亦加捨三心",
        "from": "T46n1920_001:0585c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今承三寶力　　起三十六問",
        "from": "T46n1920_001:0585c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其門諸細門　　對事難可數",
        "from": "T46n1920_001:0585c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若觀一念心　　能答此問者",
        "from": "T46n1920_001:0585c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知心眼開　　得入清涼池",
        "from": "T46n1920_001:0585c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能答此問　　奈何盲冥也",
        "from": "T46n1920_001:0585c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少義尚不見　　那得行大道",
        "from": "T46n1920_001:0585c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀哉末法中　　無復得道者",
        "from": "T46n1920_001:0585c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設令有三數　　寧別此問也",
        "from": "T46n1920_001:0585c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故生悲愍心　　歸命禮三寶",
        "from": "T46n1920_001:0586a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作此問心論　　令觀者開朗",
        "from": "T46n1920_001:0586a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸見聞者　　莫生疑謗心",
        "from": "T46n1920_001:0586a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信受勤修習　　必獲大利法",
        "from": "T46n1920_001:0586a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問曰。",
        "from": "T46n1920_001:0586a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故作此問觀心論。",
        "from": "T46n1920_001:0586a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答曰。",
        "from": "T46n1920_001:0586a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末世數寶貪人本不預此言若禪坐觀行之者。",
        "from": "T46n1920_001:0586a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但安心鼻隔不淨安般。",
        "from": "T46n1920_001:0586a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此亦面牆。",
        "from": "T46n1920_001:0586a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何可論道。",
        "from": "T46n1920_001:0586a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有觀心入道得定生倒解。",
        "from": "T46n1920_001:0586a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辯說無窮。",
        "from": "T46n1920_001:0586a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自謂人間之寶。",
        "from": "T46n1920_001:0586a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈知邪慢熾然也。",
        "from": "T46n1920_001:0586a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今作此問。",
        "from": "T46n1920_001:0586a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若句句不知。",
        "from": "T46n1920_001:0586a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何得未得謂得未證謂證。",
        "from": "T46n1920_001:0586a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法華勸持品。",
        "from": "T46n1920_001:0586a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說此人難可化度。",
        "from": "T46n1920_001:0586a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又常不輕品。",
        "from": "T46n1920_001:0586a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威音王如來去世之後。",
        "from": "T46n1920_001:0586a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此人類甚多非一。",
        "from": "T46n1920_001:0586a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次傷念。",
        "from": "T46n1920_001:0586a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一家門徒隨逐積年看心稍久遠。",
        "from": "T46n1920_001:0586a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遂不知如此研窮問心。",
        "from": "T46n1920_001:0586a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以不染內法。",
        "from": "T46n1920_001:0586a14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著外文字。",
        "from": "T46n1920_001:0586a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偷記注奔走。",
        "from": "T46n1920_001:0586a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "負經論而浪行。",
        "from": "T46n1920_001:0586a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何不施語言置文破一微塵讀大千經卷。",
        "from": "T46n1920_001:0586a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此迷徒隨逐累載。",
        "from": "T46n1920_001:0586a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空無所獲。",
        "from": "T46n1920_001:0586a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脫一旦冥目誰復示之。",
        "from": "T46n1920_001:0586a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是因緣悲切轉至。",
        "from": "T46n1920_001:0586a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故作斯論也。",
        "from": "T46n1920_001:0586a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶般若波羅蜜經明四十二字門。",
        "from": "T46n1920_001:0586a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初云。",
        "from": "T46n1920_001:0586a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若聞阿字門。",
        "from": "T46n1920_001:0586a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即解一切義。",
        "from": "T46n1920_001:0586a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂一切法初不生也。",
        "from": "T46n1920_001:0586a21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍樹并造中論釋摩訶衍論。",
        "from": "T46n1920_001:0586a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正意以不生等八不開論端。",
        "from": "T46n1920_001:0586a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用一偈釋初不生。",
        "from": "T46n1920_001:0586a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云諸法不自生。",
        "from": "T46n1920_001:0586a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不從他生。",
        "from": "T46n1920_001:0586a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不共不無因。",
        "from": "T46n1920_001:0586a23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說無生。",
        "from": "T46n1920_001:0586a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今但約觀初自生一句。",
        "from": "T46n1920_001:0586a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起三十六問。",
        "from": "T46n1920_001:0586a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於觀心能答此問無滯礙者。",
        "from": "T46n1920_001:0586a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知此行人六種即中入觀行。",
        "from": "T46n1920_001:0586a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五品弟子中即是入初隨喜心位。",
        "from": "T46n1920_001:0586a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故經云。",
        "from": "T46n1920_001:0586a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至聞一偈。",
        "from": "T46n1920_001:0586a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達無量義。",
        "from": "T46n1920_001:0586a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第如法說。",
        "from": "T46n1920_001:0586a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "月四月至歲也。",
        "from": "T46n1920_001:0586a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰。",
        "from": "T46n1920_001:0586a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何四不說",
        "from": "T46n1920_001:0586a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離戲論執諍　　心淨如虛空",
        "from": "T46n1920_001:0586b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何是魔行",
        "from": "T46n1920_001:0586b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業煩惱所繫　　三界火宅燒",
        "from": "T46n1920_001:0586b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何是外道",
        "from": "T46n1920_001:0586b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸見煩惱業　　流轉於六道",
        "from": "T46n1920_001:0586b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何是三乘",
        "from": "T46n1920_001:0586b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拙度斷見思　　出三界火宅",
        "from": "T46n1920_001:0586b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何是巧度",
        "from": "T46n1920_001:0586b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三乘不斷結　　得入二涅槃",
        "from": "T46n1920_001:0586b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何是別教",
        "from": "T46n1920_001:0586b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求大乘常果　　菩薩斷別惑",
        "from": "T46n1920_001:0586b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何圓教乘",
        "from": "T46n1920_001:0586b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不破壞法界　　住三德涅槃",
        "from": "T46n1920_001:0586b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何為涅槃",
        "from": "T46n1920_001:0586b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修四種三昧　　得真無生忍",
        "from": "T46n1920_001:0586b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何巧成就",
        "from": "T46n1920_001:0586b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十五方便　　調心入正道",
        "from": "T46n1920_001:0586b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知因緣",
        "from": "T46n1920_001:0586b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "起十種境界　　成一心三智",
        "from": "T46n1920_001:0586b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知十境",
        "from": "T46n1920_001:0586b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各成十法乘　　遊四方快樂",
        "from": "T46n1920_001:0586b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何不住法",
        "from": "T46n1920_001:0586b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入初發心住　　及四十二位",
        "from": "T46n1920_001:0586b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何成六度",
        "from": "T46n1920_001:0586b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能得諸三昧　　及諸陀羅尼",
        "from": "T46n1920_001:0586b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何得六通",
        "from": "T46n1920_001:0586b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用四種行化　　四辯四罣礙",
        "from": "T46n1920_001:0586b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何得相好",
        "from": "T46n1920_001:0586b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成真應二佛　　對緣如鏡像",
        "from": "T46n1920_001:0586b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何具十力",
        "from": "T46n1920_001:0586c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及四無所畏　　內外照團圓",
        "from": "T46n1920_001:0586c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何觀於心",
        "from": "T46n1920_001:0586c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能得十八種　　不共世間法",
        "from": "T46n1920_001:0586c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何得大慈",
        "from": "T46n1920_001:0586c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲三念處　　愍眾無異相",
        "from": "T46n1920_001:0586c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何巧方便",
        "from": "T46n1920_001:0586c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就諸眾生　　嚴淨一切剎",
        "from": "T46n1920_001:0586c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何於一心",
        "from": "T46n1920_001:0586c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴菩提樹　　建清淨道場",
        "from": "T46n1920_001:0586c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何坐道場",
        "from": "T46n1920_001:0586c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現四種成佛　　赴機無差降",
        "from": "T46n1920_001:0586c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何轉四教",
        "from": "T46n1920_001:0586c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨妙法輪　　一切得甘露",
        "from": "T46n1920_001:0586c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何現四佛",
        "from": "T46n1920_001:0586c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四種涅槃相　　究竟知無餘",
        "from": "T46n1920_001:0586c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知依正",
        "from": "T46n1920_001:0586c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四土天器同　　而飯色有異",
        "from": "T46n1920_001:0586c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何於此心",
        "from": "T46n1920_001:0586c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見一切根緣　　通達無罣礙",
        "from": "T46n1920_001:0586c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知悉檀",
        "from": "T46n1920_001:0586c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無形無所緣　　現形廣說法",
        "from": "T46n1920_001:0586c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知漸頓",
        "from": "T46n1920_001:0586c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密不定教　　一音說此四",
        "from": "T46n1920_001:0586c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知四教",
        "from": "T46n1920_001:0586c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各開出四門　　及一切法門",
        "from": "T46n1920_001:0586c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何於四教",
        "from": "T46n1920_001:0586c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四門十六門　　作論通眾經",
        "from": "T46n1920_001:0586c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何住智定",
        "from": "T46n1920_001:0586c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普入十法界　　廣利諸眾生",
        "from": "T46n1920_001:0587a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知四土",
        "from": "T46n1920_001:0587a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用教有增減　　普利一切眾",
        "from": "T46n1920_001:0587a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知此心",
        "from": "T46n1920_001:0587a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具一切佛法　　無一法出心",
        "from": "T46n1920_001:0587a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知此心",
        "from": "T46n1920_001:0587a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即平等法界　　佛不度眾生",
        "from": "T46n1920_001:0587a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何知此心",
        "from": "T46n1920_001:0587a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界如虛空　　畢竟無所念",
        "from": "T46n1920_001:0587a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問觀自生心　　云何無文字",
        "from": "T46n1920_001:0587a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切言語斷　　寂然無言說",
        "from": "T46n1920_001:0587a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今約觀一念自生心。",
        "from": "T46n1920_001:0587a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略起三十六問。",
        "from": "T46n1920_001:0587a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問外觀心人及久相逐眷屬行四種三昧者。",
        "from": "T46n1920_001:0587a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼觀心者若能一一通達。",
        "from": "T46n1920_001:0587a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當生心佛想親近受行如四依也。",
        "from": "T46n1920_001:0587a15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門徒眷屬若於此無滯。",
        "from": "T46n1920_001:0587a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真因行。",
        "from": "T46n1920_001:0587a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真是法王子孫。",
        "from": "T46n1920_001:0587a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "紹三寶種使不斷絕。",
        "from": "T46n1920_001:0587a16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不能於觀一念自生心一一念答此問者。",
        "from": "T46n1920_001:0587a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是天魔外道眷屬。",
        "from": "T46n1920_001:0587a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為彼所驅馳。",
        "from": "T46n1920_001:0587a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方處三界牢獄未有出離之故也。",
        "from": "T46n1920_001:0587a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若心不燧欲求勉出者。",
        "from": "T46n1920_001:0587a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必墮三乘三惡道坑。",
        "from": "T46n1920_001:0587a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自斷法身慧命。",
        "from": "T46n1920_001:0587a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誅滅菩提眷屬。",
        "from": "T46n1920_001:0587a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真破佛法國。",
        "from": "T46n1920_001:0587a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已亡大乘家。",
        "from": "T46n1920_001:0587a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "哀哉哀哉。",
        "from": "T46n1920_001:0587a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知大等奈良何也。",
        "from": "T46n1920_001:0587a22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若觀自生心得失如此。",
        "from": "T46n1920_001:0587a23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀他生共生無因生亦然也。",
        "from": "T46n1920_001:0587a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "順相門中愛聲色。",
        "from": "T46n1920_001:0587a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逆相門中數非數。",
        "from": "T46n1920_001:0587a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不肯相遂入泥梨。",
        "from": "T46n1920_001:0587a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界中間難可度。",
        "from": "T46n1920_001:0587a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度與不度妙難思。",
        "from": "T46n1920_001:0587a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷情順相者多疑。",
        "from": "T46n1920_001:0587a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不服醍醐無價藥。",
        "from": "T46n1920_001:0587a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狂心遂涅槃若為。",
        "from": "T46n1920_001:0587a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復顯相門中說四三。",
        "from": "T46n1920_001:0587a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三輪四教從情釋。",
        "from": "T46n1920_001:0587a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不肯相遂入阿鼻。",
        "from": "T46n1920_001:0587a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "致使五分尋蹤跡。",
        "from": "T46n1920_001:0587a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非蹤非疎非五分。",
        "from": "T46n1920_001:0587a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三諦三觀在其中。",
        "from": "T46n1920_001:0587a29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡情不能巧決了。",
        "from": "T46n1920_001:0587b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盲心執見盡言空。",
        "from": "T46n1920_001:0587b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隱相門中形色絕。",
        "from": "T46n1920_001:0587b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三四調和十二門。",
        "from": "T46n1920_001:0587b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不肯隨情起貪愛。",
        "from": "T46n1920_001:0587b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為方便破魔怨。",
        "from": "T46n1920_001:0587b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貪愛魔怨是佛母。",
        "from": "T46n1920_001:0587b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦是三身本際深。",
        "from": "T46n1920_001:0587b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各隨情立名字。",
        "from": "T46n1920_001:0587b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有凡名為五隱相。",
        "from": "T46n1920_001:0587b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日忍飢非節食。",
        "from": "T46n1920_001:0587b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日忍寒非苦行終日少欲不乖貪。",
        "from": "T46n1920_001:0587b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日行慈奪他命。",
        "from": "T46n1920_001:0587b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日畏罪轉行非。",
        "from": "T46n1920_001:0587b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日求醫彌益病。",
        "from": "T46n1920_001:0587b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日布施更增慳。",
        "from": "T46n1920_001:0587b07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終日斷嗔三毒盛。",
        "from": "T46n1920_001:0587b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "難思議難思議。",
        "from": "T46n1920_001:0587b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "團團明月無增減　　凡情顛倒見盈虧",
        "from": "T46n1920_001:0587b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縱復迴光照西域　　於其更理未曾移",
        "from": "T46n1920_001:0587b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巧用巧妙巧度物　　不作怨家不作佛",
        "from": "T46n1920_001:0587b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法身巧用妙難思　　借問定從何處出",
        "from": "T46n1920_001:0587b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀心論一卷",
        "from": "T46n1920_001:0587b13_100",
        "context_with_next_sentence": false
    }
]