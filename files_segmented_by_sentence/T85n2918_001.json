[
    {
        "source_sentence": "釋家觀化還愚經",
        "from": "T85n2918_001:1462c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔舍衛國有一貧家。夫婦慳惡不信道德。佛",
        "from": "T85n2918_001:1462c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍其愚現為沙門。詣門分衛。時夫不在。其",
        "from": "T85n2918_001:1462c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婦罵詈無有道理。",
        "from": "T85n2918_001:1462c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門語曰。",
        "from": "T85n2918_001:1462c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾為道士。",
        "from": "T85n2918_001:1462c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞匃自活。",
        "from": "T85n2918_001:1462c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不惡罵詈。",
        "from": "T85n2918_001:1462c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯望一食耳。",
        "from": "T85n2918_001:1462c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "主人婦曰。",
        "from": "T85n2918_001:1462c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若汝立死食尚叵得。",
        "from": "T85n2918_001:1462c09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況今平健欲望我食。",
        "from": "T85n2918_001:1462c09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但稽留時節不如早去。",
        "from": "T85n2918_001:1462c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是沙門住立其前。",
        "from": "T85n2918_001:1462c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "載眼杼氣便現立死。",
        "from": "T85n2918_001:1462c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身體膖脹鼻口蟲出。",
        "from": "T85n2918_001:1462c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腹潰腸爛不淨流漫。",
        "from": "T85n2918_001:1462c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其婦見此恐怖失聲棄而捨走。",
        "from": "T85n2918_001:1462c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是道人忽然捨去。",
        "from": "T85n2918_001:1462c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去捨數里坐樹下息。",
        "from": "T85n2918_001:1462c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夫來歸道中見婦。",
        "from": "T85n2918_001:1462c14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怪其驚怖。",
        "from": "T85n2918_001:1462c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其婦語夫。",
        "from": "T85n2918_001:1462c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一沙門見怖如此。",
        "from": "T85n2918_001:1462c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫大瞋恚問為所在。",
        "from": "T85n2918_001:1462c15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婦曰已去。",
        "from": "T85n2918_001:1462c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想亦未遠。",
        "from": "T85n2918_001:1462c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫即執弓帶刀尋迹往逐。",
        "from": "T85n2918_001:1462c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "張弓拔刀奔走。",
        "from": "T85n2918_001:1462c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直前欲斫道人。",
        "from": "T85n2918_001:1462c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人即化作瑠璃城。",
        "from": "T85n2918_001:1462c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自圍繞。",
        "from": "T85n2918_001:1462c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人遶城數匝不能得入。",
        "from": "T85n2918_001:1462c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問道人何不開門。",
        "from": "T85n2918_001:1462c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人曰。",
        "from": "T85n2918_001:1462c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲所門開棄汝弓刀。",
        "from": "T85n2918_001:1462c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其人自念當隨其語。",
        "from": "T85n2918_001:1462c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若當得入手拳加之。",
        "from": "T85n2918_001:1462c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋棄弓刀。",
        "from": "T85n2918_001:1462c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門故不開。",
        "from": "T85n2918_001:1462c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語道人曰。",
        "from": "T85n2918_001:1462c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已棄弓刀。",
        "from": "T85n2918_001:1462c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門何不開。",
        "from": "T85n2918_001:1462c22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人曰。",
        "from": "T85n2918_001:1462c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾使汝棄心中惡意弓刀耳。",
        "from": "T85n2918_001:1462c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非謂手中弓刀也。",
        "from": "T85n2918_001:1462c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是其人心驚體悸。",
        "from": "T85n2918_001:1462c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人神聖乃知我心。",
        "from": "T85n2918_001:1462c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即便叩頭悔過。",
        "from": "T85n2918_001:1462c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啟道人曰。",
        "from": "T85n2918_001:1462c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我有弊妻不識真人。",
        "from": "T85n2918_001:1462c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使我與怨。",
        "from": "T85n2918_001:1462c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願小垂慈莫便捨。",
        "from": "T85n2918_001:1462c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今欲將來勸令修道。",
        "from": "T85n2918_001:1462c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即起還歸。",
        "from": "T85n2918_001:1462c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其妻問曰。",
        "from": "T85n2918_001:1462c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門所在。",
        "from": "T85n2918_001:1462c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其夫具說神之德。",
        "from": "T85n2918_001:1462c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今者在彼鄉。",
        "from": "T85n2918_001:1462c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜自往改悔滅罪。",
        "from": "T85n2918_001:1462c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是夫妻至道人所。",
        "from": "T85n2918_001:1462c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五體悔過願為弟子。",
        "from": "T85n2918_001:1462c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長跪問曰。",
        "from": "T85n2918_001:1462c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人神變聖達乃爾。",
        "from": "T85n2918_001:1463a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有瑠璃城堅固難踰。",
        "from": "T85n2918_001:1463a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志明意定永無憂患。",
        "from": "T85n2918_001:1463a01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行何道德致此神妙也。",
        "from": "T85n2918_001:1463a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人答曰。",
        "from": "T85n2918_001:1463a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾博學無厭奉法。",
        "from": "T85n2918_001:1463a03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不懈精進持戒慧不放逸。",
        "from": "T85n2918_001:1463a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣是得道。",
        "from": "T85n2918_001:1463a03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自到泥洹。",
        "from": "T85n2918_001:1463a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是道人因說偈言。",
        "from": "T85n2918_001:1463a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞持堅固　　奉法為垣墻　　精進難踰毀",
        "from": "T85n2918_001:1463a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是戒慧成　　多聞令志明　　已明智慧增",
        "from": "T85n2918_001:1463a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智則博解義　　見義行法安　　多聞能除憂",
        "from": "T85n2918_001:1463a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以定為歡　　善說甘露法　　自知得泥洹",
        "from": "T85n2918_001:1463a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞為知法律　　解疑亦見□　　從聞捨非法",
        "from": "T85n2918_001:1463a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行至不死處道人說偈已現佛光相。",
        "from": "T85n2918_001:1463a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洪暉赫奕照耀天地。",
        "from": "T85n2918_001:1463a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫婦驚愕精神戰懼。",
        "from": "T85n2918_001:1463a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "改怨洗心頭腦打地。",
        "from": "T85n2918_001:1463a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壞二十億惡得須陀洹道。",
        "from": "T85n2918_001:1463a13_9",
        "context_with_next_sentence": true
    }
]