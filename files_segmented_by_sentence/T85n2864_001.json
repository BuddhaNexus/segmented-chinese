[
    {
        "source_sentence": "進旨",
        "from": "T85n2864_001:1324a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進旨　皇帝聞語滿目流淚。良久乃言和尚",
        "from": "T85n2864_001:1324a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曰。朕之小國總無供養。上人數年在其內中。",
        "from": "T85n2864_001:1324a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕且無心輕慢。",
        "from": "T85n2864_001:1324a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朕雖為人主濫處乾坤。",
        "from": "T85n2864_001:1324a28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每謝上人來過小國。",
        "from": "T85n2864_001:1324a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願和尚慈悲更住。",
        "from": "T85n2864_001:1324a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三五日間得之已否　遠公曰。",
        "from": "T85n2864_001:1324b01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夫涅槃之義本無攀緣。",
        "from": "T85n2864_001:1324b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有攀緣皆屬妄想。",
        "from": "T85n2864_001:1324b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏願陛下莫懷惆悵。",
        "from": "T85n2864_001:1324b03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧道有願歸山。",
        "from": "T85n2864_001:1324b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皇帝見他。",
        "from": "T85n2864_001:1324b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公語切便如情意難留。",
        "from": "T85n2864_001:1324b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有勅先報六宮闇裏排比祖送。",
        "from": "T85n2864_001:1324b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是時皇帝慕戀辟宰冲冲合國大臣同時祖送。",
        "from": "T85n2864_001:1324b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公上路離宮闕別龍樓。",
        "from": "T85n2864_001:1324b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "望㠠山而路遠。",
        "from": "T85n2864_001:1324b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩江河以逍遙。",
        "from": "T85n2864_001:1324b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是日遠公能涉長路而行遂。",
        "from": "T85n2864_001:1324b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即密現神通。",
        "from": "T85n2864_001:1324b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公既出長安足下雲生。",
        "from": "T85n2864_001:1324b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如壯士展臂須臾之間便至㠠山。",
        "from": "T85n2864_001:1324b09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公亦也不歸舊寺。",
        "from": "T85n2864_001:1324b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相去十里。",
        "from": "T85n2864_001:1324b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已來於一峻嶺上權時結一草菴。",
        "from": "T85n2864_001:1324b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼中結跏敷坐便即重尋舊卷。",
        "from": "T85n2864_001:1324b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再舉經聲荏苒之間。",
        "from": "T85n2864_001:1324b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又經數月。",
        "from": "T85n2864_001:1324b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公忽望高原。",
        "from": "T85n2864_001:1324b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃喚此上。",
        "from": "T85n2864_001:1324b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其境峻峯鶴鳴澗下龍吟。",
        "from": "T85n2864_001:1324b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百谷千峯例皆花發。",
        "from": "T85n2864_001:1324b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地平長流之水。",
        "from": "T85n2864_001:1324b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "薗開不朽之花。",
        "from": "T85n2864_001:1324b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是如來修行之處。",
        "from": "T85n2864_001:1324b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於是遠公正坐入其三昧。",
        "from": "T85n2864_001:1324b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然淨意澄心思惟佛道念浮生不久想凡世而無堪便將自性心王造一法船歸依上界。",
        "from": "T85n2864_001:1324b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠公造船不用。",
        "from": "T85n2864_001:1324b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡間料物也。",
        "from": "T85n2864_001:1324b18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不要諸般。",
        "from": "T85n2864_001:1324b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自持無漏。",
        "from": "T85n2864_001:1324b19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大乘已為纜索。",
        "from": "T85n2864_001:1324b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩提般若用作拘欄。",
        "from": "T85n2864_001:1324b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛密迹已為□□□。",
        "from": "T85n2864_001:1324b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開寶伍年張長繼書記",
        "from": "T85n2864_001:1324b21_100",
        "context_with_next_sentence": false
    }
]