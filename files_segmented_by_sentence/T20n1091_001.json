[
    {
        "source_sentence": "七星如意輪祕密要經",
        "from": "T20n1091_001:0224b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏不空譯",
        "from": "T20n1091_001:0224b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時佛在大雪山伽王那蘭陀。與",
        "from": "T20n1091_001:0224b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大比丘眾千二百五十人俱。",
        "from": "T20n1091_001:0224b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰大目犍連舍利弗。",
        "from": "T20n1091_001:0224b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩訶迦旃延波多。",
        "from": "T20n1091_001:0224b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難陀摩訶迦葉。",
        "from": "T20n1091_001:0224b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富樓那彌多羅尼子。",
        "from": "T20n1091_001:0224b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復又菩薩萬八千。",
        "from": "T20n1091_001:0224b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆得不退轉陀羅尼辯才。",
        "from": "T20n1091_001:0224b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等恒河沙數眾中轉大法輪。",
        "from": "T20n1091_001:0224b11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時迦夷城宮內使。",
        "from": "T20n1091_001:0224b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來詣佛所頂禮佛足。",
        "from": "T20n1091_001:0224b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言。",
        "from": "T20n1091_001:0224b12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "波斯匿王使我諮量。",
        "from": "T20n1091_001:0224b12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱尸羅大國與兵無數萬億來圍迦夷。",
        "from": "T20n1091_001:0224b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君臣惶忙人民恐懼。",
        "from": "T20n1091_001:0224b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊由大智力救護我等。",
        "from": "T20n1091_001:0224b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊。",
        "from": "T20n1091_001:0224b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即告神通王菩薩。",
        "from": "T20n1091_001:0224b15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往於迦夷城宮內。",
        "from": "T20n1091_001:0224b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速建如意寶輪般多羅道場七星火壇祕密之門。",
        "from": "T20n1091_001:0224b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂般多羅道場者。",
        "from": "T20n1091_001:0224b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造於淨室。",
        "from": "T20n1091_001:0224b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七星火壇作於露地。",
        "from": "T20n1091_001:0224b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一日一夜如法作。",
        "from": "T20n1091_001:0224b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其賊眾者自然退散。",
        "from": "T20n1091_001:0224b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其法事者。",
        "from": "T20n1091_001:0224b19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先須結界然後作般多羅法門。",
        "from": "T20n1091_001:0224b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無如意輪王大法主。",
        "from": "T20n1091_001:0224b20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今奉造般多羅者。",
        "from": "T20n1091_001:0224b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有天耳眼。",
        "from": "T20n1091_001:0224b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有神通者證明法則。",
        "from": "T20n1091_001:0224b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦如意輪真言七遍。",
        "from": "T20n1091_001:0224b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七呪水灑地。",
        "from": "T20n1091_001:0224b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取界后為結界。",
        "from": "T20n1091_001:0224b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂般多羅者。",
        "from": "T20n1091_001:0224b23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且最清淨室地平如鏡。",
        "from": "T20n1091_001:0224b23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中央造五色輪象如車輪。",
        "from": "T20n1091_001:0224b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或十道或十二道。",
        "from": "T20n1091_001:0224b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪約間畫波折羅相。",
        "from": "T20n1091_001:0224b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪輻上亦爾。",
        "from": "T20n1091_001:0224b25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中央安如意輪王菩薩。",
        "from": "T20n1091_001:0224b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一輻間安七星像及訶利低母。",
        "from": "T20n1091_001:0224b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一像前安燈蘇香等種種供養。",
        "from": "T20n1091_001:0224b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所為人姓名畫於本星。",
        "from": "T20n1091_001:0224b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨座於輪外。",
        "from": "T20n1091_001:0224b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一即啟法事成就。",
        "from": "T20n1091_001:0224b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持念誦一座一百八遍。",
        "from": "T20n1091_001:0224b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀念不成不數其遍。",
        "from": "T20n1091_001:0224c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂火壇者。",
        "from": "T20n1091_001:0224c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於露地造火爐。",
        "from": "T20n1091_001:0224c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一肘或二肘。",
        "from": "T20n1091_001:0224c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即加持一人或優婆塞優婆夷。",
        "from": "T20n1091_001:0224c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著新淨衣。",
        "from": "T20n1091_001:0224c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造本星食餅及蘇蜜香藥等。",
        "from": "T20n1091_001:0224c03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即向七星一拜一燒一心著本星。",
        "from": "T20n1091_001:0224c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或動異光即得成就。",
        "from": "T20n1091_001:0224c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若清淨阿闍梨者。",
        "from": "T20n1091_001:0224c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若王若臣乃至人民。",
        "from": "T20n1091_001:0224c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自作火壇求請。",
        "from": "T20n1091_001:0224c06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其所願即得成就。",
        "from": "T20n1091_001:0224c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時神通王菩薩。",
        "from": "T20n1091_001:0224c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即奉教勅往於迦夷大城宮內。",
        "from": "T20n1091_001:0224c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一作法。",
        "from": "T20n1091_001:0224c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "霹靂雷電賊徒散滅。",
        "from": "T20n1091_001:0224c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "君臣歡喜人民安樂。",
        "from": "T20n1091_001:0224c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時神通王菩薩。",
        "from": "T20n1091_001:0224c09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却來佛處頂禮佛足。",
        "from": "T20n1091_001:0224c10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言奇哉世尊。",
        "from": "T20n1091_001:0224c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可思議祕密法門。",
        "from": "T20n1091_001:0224c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意寶輪王菩薩今何在。",
        "from": "T20n1091_001:0224c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等之輩蒙如來力。",
        "from": "T20n1091_001:0224c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往彼世界頂禮如意輪王菩薩。",
        "from": "T20n1091_001:0224c12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告神通王菩薩。",
        "from": "T20n1091_001:0224c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉。",
        "from": "T20n1091_001:0224c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正南方有世界名曰七寶轉輪王。",
        "from": "T20n1091_001:0224c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七寶輪上護法七星及諸天眾周匝。",
        "from": "T20n1091_001:0224c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為轉法輪度脫眾生。",
        "from": "T20n1091_001:0224c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時神通王菩薩。",
        "from": "T20n1091_001:0224c15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言。",
        "from": "T20n1091_001:0224c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊以何因緣。",
        "from": "T20n1091_001:0224c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不但觀念如意輪王菩薩。",
        "from": "T20n1091_001:0224c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又令禮拜本星等耶。",
        "from": "T20n1091_001:0224c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言昔燃燈佛所受此法門。",
        "from": "T20n1091_001:0224c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七星精靈天而下。",
        "from": "T20n1091_001:0224c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訶利大神從地而出。",
        "from": "T20n1091_001:0224c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我等輩護此大法。",
        "from": "T20n1091_001:0224c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有人等奉造此法。",
        "from": "T20n1091_001:0224c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等先至成就法事。",
        "from": "T20n1091_001:0224c20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此因緣兼存造法。",
        "from": "T20n1091_001:0224c20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時神通王菩薩。",
        "from": "T20n1091_001:0224c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承佛大神力。",
        "from": "T20n1091_001:0224c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往彼世界。",
        "from": "T20n1091_001:0224c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮如意輪王菩薩。",
        "from": "T20n1091_001:0224c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作是言。",
        "from": "T20n1091_001:0224c22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我等住於娑婆界　　修學如來因地門",
        "from": "T20n1091_001:0224c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救度迦夷波斯王　　以此因緣禮仁者",
        "from": "T20n1091_001:0224c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七寶莊嚴寶輪王　　菩薩相好不思議",
        "from": "T20n1091_001:0224c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依正二報俱勝妙　　我今敬禮如意輪",
        "from": "T20n1091_001:0224c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如意輪菩薩而說偈言。",
        "from": "T20n1091_001:0224c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今所修菩薩道　　度脫眾生長夜苦",
        "from": "T20n1091_001:0224c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今座莊嚴如意輪　　令諸眾生亦如是",
        "from": "T20n1091_001:0224c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世有眾生有所願　　今我如意寶輪王",
        "from": "T20n1091_001:0225a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其種種所受樂　　無不從心為如意",
        "from": "T20n1091_001:0225a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生在世界　　欲得通達無為道",
        "from": "T20n1091_001:0225a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業障深厚不成就　　我以寶輪使開悟",
        "from": "T20n1091_001:0225a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有世界三災起　　國界人民不安樂",
        "from": "T20n1091_001:0225a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中有人造我法　　如意聖輪與大樂",
        "from": "T20n1091_001:0225a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有世界他界賊　　四方覆嬈不安寧",
        "from": "T20n1091_001:0225a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國中有人造我法　　如意聖輪與安樂",
        "from": "T20n1091_001:0225a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有國內飢饉難　　一切人民不安悅",
        "from": "T20n1091_001:0225a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有造我般多法　　如意聖輪能救濟",
        "from": "T20n1091_001:0225a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生在世界　　王法所加被獄囚",
        "from": "T20n1091_001:0225a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造我大法般多羅　　如意聖輪能救濟",
        "from": "T20n1091_001:0225a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生在嶮難　　如意聖輪能救濟",
        "from": "T20n1091_001:0225a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生在世界　　盲聾跛𨄜種種病",
        "from": "T20n1091_001:0225a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念我大法般多羅　　如意聖輪能救濟",
        "from": "T20n1091_001:0225a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生在世界　　欲得家富求富祿",
        "from": "T20n1091_001:0225a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造我大法般多羅　　如意聖輪如其願",
        "from": "T20n1091_001:0225a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有如是如意輪　　一切罪障無不除",
        "from": "T20n1091_001:0225a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切吉祥無不致　　無所不至拔濟苦",
        "from": "T20n1091_001:0225a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天龍神及人間　　一切眾生有歸依",
        "from": "T20n1091_001:0225a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不隨其心墮妄語　　是法能除一切罪",
        "from": "T20n1091_001:0225a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "增長一切諸功德　　自在能照於五道",
        "from": "T20n1091_001:0225a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就一切眾生願爾時神通王菩薩。",
        "from": "T20n1091_001:0225a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮聖輪還來本處。",
        "from": "T20n1091_001:0225a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心受持此不可思議摩訶般多羅祕密法門真言。",
        "from": "T20n1091_001:0225a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無阿羅姪那阿阿那一南阿梨耶二婆嚕吉帝沙波訶阿耶三菩提薩埵婆耶四摩訶迦烏尼迦耶五多姪他七唵折揭羅婆帝九真多摩尼十摩訶波地迷十一嚕嚕帝遮揭阿沙吽唎婆訶十二唵十三波地迷真多摩尼摩訶遮揭阿吽十四唵波阿多波地迷吽十五七星本部印　如意輪本印　長誦印　若人心有所求。",
        "from": "T20n1091_001:0225b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有病難延壽求祿。",
        "from": "T20n1091_001:0225b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一切心所願求。",
        "from": "T20n1091_001:0225b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當使本星必當隨心。",
        "from": "T20n1091_001:0225b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來在世立大誓願。",
        "from": "T20n1091_001:0225b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為此部中當護摩。",
        "from": "T20n1091_001:0225b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此因緣當用七星以靈驗。",
        "from": "T20n1091_001:0225b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是多祕密不得外傳。",
        "from": "T20n1091_001:0225b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為國王或為大臣造此法。",
        "from": "T20n1091_001:0225b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得為人民百姓淺識有情造此大法　午詖此云小豆食蘇古香木　未巳多伊尼此云大豆食波知桃木　申辰薩波此云麻子食波此荊木　酉卯蘇烏帝此云麥食彌蘇帝違木　戌寅薩波之此云稻米食孫蘇烏獪　亥丑波伊蘇此云粟食舟尼此云槐木子薩波耶此云黍食揭帝此云桐木。",
        "from": "T20n1091_001:0225b14_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七星如意輪祕密要經天明五乙巳春二月十日。",
        "from": "T20n1091_001:0225b16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於洛北大報恩寺。",
        "from": "T20n1091_001:0225b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上品蓮臺寺藏本寫訖。",
        "from": "T20n1091_001:0225b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此七星如意輪經。",
        "from": "T20n1091_001:0225b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於重譽深密抄薄草子後重等證之。",
        "from": "T20n1091_001:0225b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　智積院寓學東武　慈忍　識享和改元仲秋月。",
        "from": "T20n1091_001:0225b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得右件之本令寫之。",
        "from": "T20n1091_001:0225b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當嶺慈心院傳燈等挍閱。",
        "from": "T20n1091_001:0225b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予更考訂以彫刻。",
        "from": "T20n1091_001:0225b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一挍加筆訖　　　　　　　　　慈順",
        "from": "T20n1091_001:0225b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "享和三年四月七日此日也雨曚曚矣。",
        "from": "T20n1091_001:0225b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙挍之了　　　　　　　　　　龍肝",
        "from": "T20n1091_001:0225b26_0",
        "context_with_next_sentence": true
    }
]