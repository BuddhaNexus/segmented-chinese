[
    {
        "source_sentence": "佛說善夜經一卷",
        "from": "T21n1362_001:0881c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐三藏法師義淨奉　制譯",
        "from": "T21n1362_001:0881c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時薄伽梵。在王舍城竹林園所。",
        "from": "T21n1362_001:0881c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去斯不遠有一苾芻住溫泉側。",
        "from": "T21n1362_001:0881c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有一天顏貌端嚴光明殊妙。",
        "from": "T21n1362_001:0881c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過初夜分詣苾芻所。",
        "from": "T21n1362_001:0881c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼天威光周圓赫奕。",
        "from": "T21n1362_001:0881c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆照耀普遍溫泉。",
        "from": "T21n1362_001:0881c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合掌禮敬在一面坐。",
        "from": "T21n1362_001:0881c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白苾芻言大德。",
        "from": "T21n1362_001:0881c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁頗先聞善夜經不。",
        "from": "T21n1362_001:0881c11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻答曰我未曾聞如是經典。",
        "from": "T21n1362_001:0881c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復問天言仁先知不。",
        "from": "T21n1362_001:0881c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天曰我亦不知。",
        "from": "T21n1362_001:0881c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻曰誰有知者。",
        "from": "T21n1362_001:0881c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天曰無上慈父在竹林園。",
        "from": "T21n1362_001:0881c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁今可往詣彼請問。",
        "from": "T21n1362_001:0881c14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說當奉行之。",
        "from": "T21n1362_001:0881c14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語已忽然不現。",
        "from": "T21n1362_001:0881c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼苾芻至天曉已。",
        "from": "T21n1362_001:0881c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "詣世尊所頂禮雙足。",
        "from": "T21n1362_001:0881c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在一面立白言世尊。",
        "from": "T21n1362_001:0881c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昨夜有天過初更後。",
        "from": "T21n1362_001:0881c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來詣我所。",
        "from": "T21n1362_001:0881c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明照曜周遍溫泉。",
        "from": "T21n1362_001:0881c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而問我言。",
        "from": "T21n1362_001:0881c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁頗先聞善夜經不。",
        "from": "T21n1362_001:0881c18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我言未聞。",
        "from": "T21n1362_001:0881c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我問彼天仁先知不。",
        "from": "T21n1362_001:0881c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言不知。",
        "from": "T21n1362_001:0881c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我復問言誰有知者。",
        "from": "T21n1362_001:0881c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼言無上慈父在竹林園。",
        "from": "T21n1362_001:0881c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仁可往問。",
        "from": "T21n1362_001:0881c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如佛所說當奉行之。",
        "from": "T21n1362_001:0881c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是語已忽然不現。",
        "from": "T21n1362_001:0881c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我緣斯事故來至此請問世尊。",
        "from": "T21n1362_001:0881c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告苾芻汝識彼天不。",
        "from": "T21n1362_001:0881c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答言不識。",
        "from": "T21n1362_001:0881c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今當知彼是三十三天勝妙天子威德大將名曰栴檀。",
        "from": "T21n1362_001:0881c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲利益諸眾生故。",
        "from": "T21n1362_001:0881c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "來覺悟汝問是經名。",
        "from": "T21n1362_001:0881c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼苾芻復白佛言。",
        "from": "T21n1362_001:0881c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我今願聞善夜經典。",
        "from": "T21n1362_001:0881c26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊哀愍為說。",
        "from": "T21n1362_001:0881c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊告苾芻言。",
        "from": "T21n1362_001:0881c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此善夜經具大功德。",
        "from": "T21n1362_001:0881c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有聞者能斷煩惱速證菩提。",
        "from": "T21n1362_001:0881c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝應諦聽善極作意。",
        "from": "T21n1362_001:0881c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾當為說。",
        "from": "T21n1362_001:0881c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸法不應追念。",
        "from": "T21n1362_001:0881c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未來諸法亦不希求。",
        "from": "T21n1362_001:0882a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現在諸法勿生染著。",
        "from": "T21n1362_001:0882a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行者名真解脫。",
        "from": "T21n1362_001:0882a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說頌曰。",
        "from": "T21n1362_001:0882a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去不應念　　未來不希求",
        "from": "T21n1362_001:0882a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於現在時中　　皆如法觀察",
        "from": "T21n1362_001:0882a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄想心難遣　　智人應善觀",
        "from": "T21n1362_001:0882a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜可速勤修　　焉知至明日",
        "from": "T21n1362_001:0882a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼死王眾　　與汝鎮相隨",
        "from": "T21n1362_001:0882a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我牟尼　　善夜經今說",
        "from": "T21n1362_001:0882a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常願諸有情　　離苦獲安樂",
        "from": "T21n1362_001:0882a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不造諸惡業　　恒修於眾善",
        "from": "T21n1362_001:0882a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊為欲利益一切眾生。",
        "from": "T21n1362_001:0882a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令於長夜得安隱樂離諸障惱。",
        "from": "T21n1362_001:0882a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生生處增長善根。",
        "from": "T21n1362_001:0882a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常遇三寶不墮惡趣。",
        "from": "T21n1362_001:0882a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復更說此陀羅尼曰。",
        "from": "T21n1362_001:0882a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛姪他　毘尼婆引喇儞　跋柁摩單滯　摩膩儞㨖㨖㨖㨖　瞿里健陀里　旃茶里摩登祇上薩囉爛帝　莫呼剌膩攝鉢利　斫羯囉婆引枳　攝伐里莫訶攝伐里　步精揭巨列儞　儞弭儞名揭儞　訖栗多引儞　莎引訶引僧拽體天移曇去　頞󰪯伽帝　捺囉伽帝　謗蘇迦波引𧜟　劫布得都洛　迦波引𧜟　答布檀泥去莎訶若有苾芻苾芻尼鄔波索迦鄔波斯迦及餘善男子善女人等。",
        "from": "T21n1362_001:0882a23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此善夜經中。",
        "from": "T21n1362_001:0882a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一伽他若一句呪。",
        "from": "T21n1362_001:0882a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦受持供養尊重。",
        "from": "T21n1362_001:0882a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明解其義為他演說。",
        "from": "T21n1362_001:0882a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人於一切時無諸災厄。",
        "from": "T21n1362_001:0882a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無抂橫及諸衰惱。",
        "from": "T21n1362_001:0882a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能知過去七生之事。",
        "from": "T21n1362_001:0882a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不忘失大菩提心。",
        "from": "T21n1362_001:0882a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定能趣涅槃正道。",
        "from": "T21n1362_001:0882a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1362_001:0882a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦此善夜經者。",
        "from": "T21n1362_001:0882a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於未來世所生之處。",
        "from": "T21n1362_001:0882a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必定當得宿住之智。",
        "from": "T21n1362_001:0882a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常受尊貴安隱快樂。",
        "from": "T21n1362_001:0882b01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說頌曰。",
        "from": "T21n1362_001:0882b01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此人一切時　　無有枉橫事",
        "from": "T21n1362_001:0882b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由造順時業　　永離非時死",
        "from": "T21n1362_001:0882b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擁護諸眾生　　令離病憂怖",
        "from": "T21n1362_001:0882b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不祥及惡夢　　險路常安隱",
        "from": "T21n1362_001:0882b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男子女人　　戴持此經者",
        "from": "T21n1362_001:0882b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具相人敬重　　所願皆圓滿",
        "from": "T21n1362_001:0882b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於身語意　　所有諸不善",
        "from": "T21n1362_001:0882b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此經威力　　終無有惡報",
        "from": "T21n1362_001:0882b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若水火王賊　　雷電毒害等",
        "from": "T21n1362_001:0882b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨家戰諍時　　念經皆得脫",
        "from": "T21n1362_001:0882b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復有明呪　　若能讀誦者",
        "from": "T21n1362_001:0882b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切時中　　長善滅諸惡",
        "from": "T21n1362_001:0882b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1362_001:0882b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛姪他　儞弭尼民達哩　窒哩盧迦引盧枳儞　窒哩輸攞陀唎儞　惡矩比　姪哩底奴麗　矩都軍底　矩都屈此　雞㗚底矩比儞　擁護擁護我某甲於一切恐怖處　於一切疾病苦痛處　於一切憂愁相惱處於一切毒蟲毒藥處　於一切鬼魅厭禱處　於一切王賊水火處　於一切猛獸驚怖處　於一切謗讟言訟處　於一切怨家鬪諍處　於一切身意惡業處　所有語業四過處　於一切厄難危亡處　并執金剛神　常衛護我某甲并諸眷屬莎引訶引復說呪曰。",
        "from": "T21n1362_001:0882b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒姪他　呬里呬里弭里弭里　畢舍脂鉢拏　攝伐里止里莎訶爾時世尊說是經已。",
        "from": "T21n1362_001:0882b29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼苾芻及諸大眾。",
        "from": "T21n1362_001:0882b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人天八部諸鬼神等皆大歡喜信受奉行。",
        "from": "T21n1362_001:0882c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說善夜經",
        "from": "T21n1362_001:0882c02_100",
        "context_with_next_sentence": false
    }
]