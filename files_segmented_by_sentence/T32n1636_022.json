[
    {
        "source_sentence": "大乘集菩薩學論卷第二十二",
        "from": "T32n1636_022:0132c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1636_022:0132c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿宣梵大師賜紫",
        "from": "T32n1636_022:0132c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若人於我滅度後，　　而能修治佛塔廟，",
        "from": "T32n1636_022:0132c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千那由他劫中，　　巍巍身相皆嚴好，",
        "from": "T32n1636_022:0132c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上適意旃檀香，　　合成宮殿及輦輿，",
        "from": "T32n1636_022:0132c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖獲勝報無所著，　　斯由修治於佛塔。",
        "from": "T32n1636_022:0132c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛正教欲滅時，　　不生閻浮諸國上，",
        "from": "T32n1636_022:0132c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其意樂住天宮，　　斯由修治於佛塔。",
        "from": "T32n1636_022:0132c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厭患五欲諸垢染，　　安住清涼淨戒蘊，",
        "from": "T32n1636_022:0132c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣修梵行靡不周，　　斯由塗香於佛塔。",
        "from": "T32n1636_022:0132c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從是滅已生天上，　　快樂豐饒不可量，",
        "from": "T32n1636_022:0132c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復能教化諸天人，　　斯由塗香於佛塔。",
        "from": "T32n1636_022:0132c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面貌圓滿常熙怡，　　所發言音生眾善，",
        "from": "T32n1636_022:0133a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見者咸興愛敬心，　　斯由塗香於佛塔。",
        "from": "T32n1636_022:0133a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離無邊惡道苦，　　常得親近諸如來，",
        "from": "T32n1636_022:0133a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣修淨業利群生，　　斯由塗香於佛塔。",
        "from": "T32n1636_022:0133a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人暫於剎那頃，　　能於佛塔拂塵網，",
        "from": "T32n1636_022:0133a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人之報難可量，　　永離八難生無難，",
        "from": "T32n1636_022:0133a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勇猛聰惠悉明了，　　於五欲境無追來，",
        "from": "T32n1636_022:0133a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常能出離諸輪迴，　　斯由淨心掃佛塔。",
        "from": "T32n1636_022:0133a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足禁戒無缺犯，　　聞深妙法生忻仰，",
        "from": "T32n1636_022:0133a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不退轉菩提心，　　斯由淨心掃佛塔。",
        "from": "T32n1636_022:0133a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人能於惡世中，　　常離毀訾諸過失，",
        "from": "T32n1636_022:0133a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積集廣大勝福惠，　　斯由淨心掃佛塔。",
        "from": "T32n1636_022:0133a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得上味諸珍饌，　　殊淨衣服所莊嚴，",
        "from": "T32n1636_022:0133a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常覺妙觸適諸根，　　斯由淨心掃佛塔。",
        "from": "T32n1636_022:0133a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於佛塔生歡喜，　　而能除去諸萎華，",
        "from": "T32n1636_022:0133a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由依十力大導師，　　得離五欲深怨害，",
        "from": "T32n1636_022:0133a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形儀挺特世希有，　　眾所樂觀無厭捨，",
        "from": "T32n1636_022:0133a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "王者常生愛敬心，　　由去萎花於佛塔。",
        "from": "T32n1636_022:0133a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足菩薩諸戒品，　　滅除一切險惡道，",
        "from": "T32n1636_022:0133a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意常明了遠癡迷，　　由去萎花於佛塔。",
        "from": "T32n1636_022:0133a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄背煩惱諸障染，　　永無病苦相纏縛，",
        "from": "T32n1636_022:0133a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切處獲輕安，　　由去萎花於佛塔。",
        "from": "T32n1636_022:0133a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得受人中第一施，　　復以最上諸供養，",
        "from": "T32n1636_022:0133a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨福惠莊嚴身，　　由去萎花於佛塔。",
        "from": "T32n1636_022:0133a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復持以新妙花，　　或曼陀羅鉢吒羅，",
        "from": "T32n1636_022:0133a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於佛塔換萎者，　　斯人當獲殊勝報。",
        "from": "T32n1636_022:0133a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人能於諸佛塔，　　精勤合掌伸禮敬，",
        "from": "T32n1636_022:0133a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼於佛德善稱揚，　　令其見者皆稽首，",
        "from": "T32n1636_022:0133a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天龍神摩睺羅，　　王及臣民生信重，",
        "from": "T32n1636_022:0133a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如妙花開世間，　　而能善說諸法要，",
        "from": "T32n1636_022:0133b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由彼善說正法故，　　安住佛智無缺減，",
        "from": "T32n1636_022:0133b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令眾生離惡趣中，　　增長人天勝義利，",
        "from": "T32n1636_022:0133b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福力念惠皆具足，　　眷屬廣多常善順。",
        "from": "T32n1636_022:0133b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說是人於世間，　　隨其意樂心安隱，",
        "from": "T32n1636_022:0133b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常發柔和寂靜音，　　教諭群生使出離，",
        "from": "T32n1636_022:0133b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其富樂不生貪，　　斯由合掌禮佛塔。",
        "from": "T32n1636_022:0133b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能行布施及愛語，　　利行平等亦復然，",
        "from": "T32n1636_022:0133b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他毀訾不生瞋，　　斯由合掌禮佛塔。",
        "from": "T32n1636_022:0133b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或往天中為帝釋，　　或在世間作人王，",
        "from": "T32n1636_022:0133b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所至自在悉隨心，　　斯由合掌禮佛塔。",
        "from": "T32n1636_022:0133b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸欲境無耽染，　　處世豪貴常止足，",
        "from": "T32n1636_022:0133b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永不墮於惡趣中，　　斯由合掌禮佛塔。",
        "from": "T32n1636_022:0133b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所發言辭豐義味，　　悉與經典善相應，",
        "from": "T32n1636_022:0133b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常生人世上族中，　　斯由合掌禮佛塔。",
        "from": "T32n1636_022:0133b15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以最上清淨心，　　盈掬持花散佛上，",
        "from": "T32n1636_022:0133b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所獲之報得為王，　　安住如前興善利，",
        "from": "T32n1636_022:0133b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼於五欲能覺了，　　則無憂惱所逼迫，",
        "from": "T32n1636_022:0133b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身相端嚴眾樂觀，　　自性寂靜亡諸怖。",
        "from": "T32n1636_022:0133b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又如《大悲經》云：",
        "from": "T32n1636_022:0133b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「阿難！",
        "from": "T32n1636_022:0133b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生能於現在供養我者，若我滅後供養舍利芥子許者，復能為我造立形像及塔廟者。",
        "from": "T32n1636_022:0133b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難！",
        "from": "T32n1636_022:0133b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "且置是事。",
        "from": "T32n1636_022:0133b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設使有人暫能發起一淨信心緣念諸佛，持以一華散於空中而用供養，是人當得轉輪聖王、帝釋天主、大梵天王，即能超越前際無知及未來劫生死流轉。",
        "from": "T32n1636_022:0133b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難！",
        "from": "T32n1636_022:0133b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復置是事。",
        "from": "T32n1636_022:0133b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人而於夢中能以一花散空供養，我說是人以此善根所得福報不知其邊。",
        "from": "T32n1636_022:0133b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又《娑伽羅龍王所問經》云：",
        "from": "T32n1636_022:0133b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若菩薩親近諸佛，則能獲得八種增上之法。",
        "from": "T32n1636_022:0133c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為八？",
        "from": "T32n1636_022:0133c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者教化眾生覩佛妙相、二者於如來所承事供養、三者於眾會中讚佛勝德、四者想念如來造立形像、五者勸化眾生常不離佛、六者隨所至處常聞佛名、七者常願往生諸佛國土、八者志不怯弱樂求佛智。",
        "from": "T32n1636_022:0133c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為八種增上之法。",
        "from": "T32n1636_022:0133c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_022:0133c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復何增長殊勝義利？",
        "from": "T32n1636_022:0133c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於佛所起承事故當得菩提。",
        "from": "T32n1636_022:0133c08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《華嚴經》偈云：",
        "from": "T32n1636_022:0133c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「無量億千劫，　　佛名難可聞，",
        "from": "T32n1636_022:0133c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復得親近，　　永斷諸疑惑。",
        "from": "T32n1636_022:0133c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來世間明，　　通達一切法，",
        "from": "T32n1636_022:0133c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普生三世福，　　令眾悉清淨。",
        "from": "T32n1636_022:0133c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來出世間，　　為世大福田，",
        "from": "T32n1636_022:0133c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普導諸含識，　　令其集福行。",
        "from": "T32n1636_022:0133c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有供養佛，　　永除惡道畏，",
        "from": "T32n1636_022:0133c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消滅一切苦，　　成就智惠身。",
        "from": "T32n1636_022:0133c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見兩足尊，　　能發廣大心，",
        "from": "T32n1636_022:0133c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人常值佛，　　增長智惠力。",
        "from": "T32n1636_022:0133c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是經復說：",
        "from": "T32n1636_022:0133c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如來大慈悲，　　出現於世間，",
        "from": "T32n1636_022:0133c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為諸群生，　　轉無上法輪。",
        "from": "T32n1636_022:0133c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來無數劫，　　勤苦為眾生，",
        "from": "T32n1636_022:0133c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何諸世間，　　能報大師恩？",
        "from": "T32n1636_022:0133c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧於無量劫，　　受諸惡道苦，",
        "from": "T32n1636_022:0133c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不捨如來，　　而求於出離。",
        "from": "T32n1636_022:0133c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧在諸惡趣，　　常得聞佛名，",
        "from": "T32n1636_022:0133c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不願生善道，　　暫時不聞佛。",
        "from": "T32n1636_022:0133c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故願久住，　　一切惡道中？",
        "from": "T32n1636_022:0133c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以得見如來，　　增長智惠力。",
        "from": "T32n1636_022:0133c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得見於佛，　　減除一切苦，",
        "from": "T32n1636_022:0134a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能入諸如來，　　大智之境界。",
        "from": "T32n1636_022:0134a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得見於佛，　　捨離一切障，",
        "from": "T32n1636_022:0134a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長養無盡福，　　成就菩提道。",
        "from": "T32n1636_022:0134a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_022:0134a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暫見形像尚獲斯報，況復親覩如來色相信受教誨，得福甚多。",
        "from": "T32n1636_022:0134a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《信力入印經》云：",
        "from": "T32n1636_022:0134a06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「文殊師利！",
        "from": "T32n1636_022:0134a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人能於一切世界微塵數辟支佛所，日日持以百味飲食上妙衣服，於河沙劫而用供養。",
        "from": "T32n1636_022:0134a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "文殊師利！",
        "from": "T32n1636_022:0134a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復有人暫能瞻奉一畫佛像及諸經典，此福勝前無量阿僧祇。",
        "from": "T32n1636_022:0134a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況合掌，持以一花、或以一香及以塗香、或燃一燈而以供養，此福勝前無量阿僧祇。",
        "from": "T32n1636_022:0134a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_022:0134a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明方便增長功德。",
        "from": "T32n1636_022:0134a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《菩薩藏經》云：",
        "from": "T32n1636_022:0134a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若能修治故舊佛塔，當獲四種清淨大願：",
        "from": "T32n1636_022:0134a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者最上色相無有與等、二者受持經典精進無懈、三者所生之處得見如來、四者於當生身具足諸相。",
        "from": "T32n1636_022:0134a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是經復說：",
        "from": "T32n1636_022:0134a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若人能於如來塔所，以眾名花及諸塗香恭敬供養，而復獲得八種無減：",
        "from": "T32n1636_022:0134a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者色相無減、二者受用無減、三者眷屬無減、四者戒品無減、五者定力無減、六者多聞無減、七者智惠無減、八者勝願無減。",
        "from": "T32n1636_022:0134a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又如《寶積經》云：",
        "from": "T32n1636_022:0134a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「假使眾生充滿三有，各各造作如來塔廟，其量高廣如須彌盧山，於殑伽沙劫各以種種上妙供養。",
        "from": "T32n1636_022:0134a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩以不捨一切智心，持以一花奉施彼塔，所獲福蘊復過於彼。",
        "from": "T32n1636_022:0134a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」是經復說：",
        "from": "T32n1636_022:0134a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「假使三千大千世界所有眾生，一一皆得轉輪聖王安住大乘，一一輪王以大海量而為燈器，等彌盧山而為燈炷，各以如是供養佛塔；",
        "from": "T32n1636_022:0134b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出家菩薩能以少油塗撚為燭，持用供養如來塔廟，所得功德勝前燈施，百分、歌羅分乃至烏波尼剎曇分不及其一。",
        "from": "T32n1636_022:0134b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼轉輪聖王能於現前佛比丘眾，以諸樂具而用布施；",
        "from": "T32n1636_022:0134b05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出家菩薩常行乞食，或有所得隨彼見者分以食之，所獲功德勝前無比。",
        "from": "T32n1636_022:0134b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼轉輪聖王以袈裟服積如須彌，能於現前佛比丘眾持用布施；",
        "from": "T32n1636_022:0134b08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出家菩薩於三衣外所有長物，隨應奉施現前諸佛、安住大乘諸比丘僧及如來塔，其所得福倍前所施。",
        "from": "T32n1636_022:0134b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又彼轉輪聖王一一各以滿閻浮提諸上妙花供養佛塔；",
        "from": "T32n1636_022:0134b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若出家菩薩能以一花施如來塔，勝前供養，百分、歌羅分乃至烏波尼剎曇分不及其一。",
        "from": "T32n1636_022:0134b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_022:0134b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若廣明行相，如〈次第超越品〉說：",
        "from": "T32n1636_022:0134b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「彼出家菩薩如是知已，若能現前供養如來，即獲四種賢善功德：",
        "from": "T32n1636_022:0134b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者常得最上恭敬供養、二者彼所見已隨順依學、三者而能堅固大菩提心、四者增長善根現前得見三十二種大丈夫相。",
        "from": "T32n1636_022:0134b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又《海意菩薩所問經》云：",
        "from": "T32n1636_022:0134b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次海意！",
        "from": "T32n1636_022:0134b20_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有三種法名為供養承事如來。",
        "from": "T32n1636_022:0134b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為三？",
        "from": "T32n1636_022:0134b21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者發菩提心無有退轉、二者於諸正法而能攝持、三者於眾生所發起大悲。",
        "from": "T32n1636_022:0134b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又《寶雲經》說：",
        "from": "T32n1636_022:0134b23_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善男子！",
        "from": "T32n1636_022:0134b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩成就十法，處於胎藏垢穢不染。",
        "from": "T32n1636_022:0134b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為十？",
        "from": "T32n1636_022:0134b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者以淨信心造如來像、二者修治諸佛故舊塔廟、三者以眾妙香而用塗飾、四者持諸香水灌沐如來、五者於佛塔中掃灑塗地、六者親能承事所生父母、七者親能供養和尚闍梨、八者常能供給同梵行者、九者所行惠施不希其報、十者以此善根令諸有情不染胎藏垢穢而生。",
        "from": "T32n1636_022:0134c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T32n1636_022:0134c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能具足如是十法，則能發起深心隨喜。",
        "from": "T32n1636_022:0134c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」如《般若經》云：",
        "from": "T32n1636_022:0134c03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若菩薩摩訶薩安住大乘，應當最初發心隨喜。",
        "from": "T32n1636_022:0134c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸菩薩能行是行，則於大乘得不退轉。",
        "from": "T32n1636_022:0134c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言：",
        "from": "T32n1636_022:0134c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『憍尸迦！",
        "from": "T32n1636_022:0134c06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使有人而能稱量三千大千世界，可知其數；",
        "from": "T32n1636_022:0134c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸菩薩發心隨喜所得功德，不可校計。",
        "from": "T32n1636_022:0134c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』時帝釋天主白佛言：",
        "from": "T32n1636_022:0134c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『世尊！",
        "from": "T32n1636_022:0134c08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸菩薩從初發心乃至得成正等正覺，而於其中所作無量隨喜善根，若諸菩薩不聞不知亦不攝取，當知是人為魔所持。",
        "from": "T32n1636_022:0134c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』佛言：",
        "from": "T32n1636_022:0134c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『憍尸迦！",
        "from": "T32n1636_022:0134c11_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人欲速證得如來、應供、正等正覺，應於大乘發心隨喜。",
        "from": "T32n1636_022:0134c13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然於聲聞辟支佛乘，亦非愛樂亦非捨離，而能共彼興隨喜心。",
        "from": "T32n1636_022:0134c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當知是人在所生處常值十善，則能獲得供養恭敬尊重讚歎，於所見色聲香味觸無不可意，永離惡趣得生天上。",
        "from": "T32n1636_022:0134c17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何？",
        "from": "T32n1636_022:0134c17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所作如其利益，使諸眾生皆得快樂。",
        "from": "T32n1636_022:0134c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以是善根，能令無量阿僧祇人發隨喜心，當得阿耨多羅三藐三菩提。",
        "from": "T32n1636_022:0134c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」是經復說：",
        "from": "T32n1636_022:0134c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「須菩提！",
        "from": "T32n1636_022:0134c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使殑伽沙數三千大千世界一切眾生皆發阿耨多羅三藐三菩提心，一一各於殑伽沙劫修四禪定，安住寂靜離動亂想。",
        "from": "T32n1636_022:0134c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若菩薩摩訶薩脩習般若波羅蜜多，能以方便善巧攝取過去未來現在諸佛所修定惠解脫解脫知見，於緣覺乘及聲聞乘所有戒定惠解脫解脫知見，如是等種種善根合集稱量，以最上最極最勝最妙廣大無量無等等心皆悉隨喜，復以如是隨喜善根，迴向阿耨多羅三藐三菩提須菩提。",
        "from": "T32n1636_022:0135a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其所得福，勝前菩薩修定功德不可為比，百分、歌羅分乃至烏波尼剎曇分不及其一。",
        "from": "T32n1636_022:0135a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_022:0135a04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說迴向行竟勸請功德。",
        "from": "T32n1636_022:0135a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《最上問經》云：",
        "from": "T32n1636_022:0135a05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「若能攝受正法，則為已於無量無數諸佛剎土護佛壽命。",
        "from": "T32n1636_022:0135a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」18 念三寶品1念三寶品第十八論曰：",
        "from": "T32n1636_022:0135a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明賢善行次第增福，此非別因而能獲得，謂於信等常當修習。",
        "from": "T32n1636_022:0135a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《祕密大乘經》云：",
        "from": "T32n1636_022:0135a09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛言：",
        "from": "T32n1636_022:0135a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "『大王！",
        "from": "T32n1636_022:0135a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今當知有四種法，若能於此如理行者，則為安住大乘趣向勝道所有善法而無壞失。",
        "from": "T32n1636_022:0135a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四？",
        "from": "T32n1636_022:0135a12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大王！",
        "from": "T32n1636_022:0135a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者謂信能向勝道。",
        "from": "T32n1636_022:0135a12_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復何名信？",
        "from": "T32n1636_022:0135a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以有信故而能隨順諸聖種類，所不應作而悉不作。",
        "from": "T32n1636_022:0135a14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者尊重能向勝道。",
        "from": "T32n1636_022:0135a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以尊重故，於諸聖者所說妙法審諦聽受。",
        "from": "T32n1636_022:0135a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者無慢能向勝道。",
        "from": "T32n1636_022:0135a16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以無慢故，則能於彼一切聖眾恭信頂禮。",
        "from": "T32n1636_022:0135a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者精進能向勝道。",
        "from": "T32n1636_022:0135a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以精進故，若身若心悉得輕安，所作善法皆得成辦。",
        "from": "T32n1636_022:0135a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "』」論曰：",
        "from": "T32n1636_022:0135a19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說於信常所修習，如是別明信等五根。",
        "from": "T32n1636_022:0135a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《無盡意經》說：",
        "from": "T32n1636_022:0135a20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「云何五根？",
        "from": "T32n1636_022:0135a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂信根、進根、念根、定根、惠根。",
        "from": "T32n1636_022:0135a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何信根？",
        "from": "T32n1636_022:0135a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於四法深忍樂欲：",
        "from": "T32n1636_022:0135a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者於生死中行世正行、信於業報，由造業故彼報定有，乃至失命終不作罪。",
        "from": "T32n1636_022:0135a23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者信樂菩薩所行正行，不求餘乘不隨諸見。",
        "from": "T32n1636_022:0135a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者於勝義中了知無我、眾生、壽者、補特伽羅，於空無相無願諸法深能信解。",
        "from": "T32n1636_022:0135a26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者於佛功德力無畏等生決定信斷除疑網。",
        "from": "T32n1636_022:0135a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名信根。",
        "from": "T32n1636_022:0135a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何進根？",
        "from": "T32n1636_022:0135a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法信根所攝，是法勤勇無間，是名進根。",
        "from": "T32n1636_022:0135a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何念根？",
        "from": "T32n1636_022:0135a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法進根所修，是法終不忘失，是名念根。",
        "from": "T32n1636_022:0135b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何定根？",
        "from": "T32n1636_022:0135b01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法念根所攝，是法一心不亂，是名定根。",
        "from": "T32n1636_022:0135b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何惠根？",
        "from": "T32n1636_022:0135b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若法定根所攝，是法自所觀照不從他解，是名惠根。",
        "from": "T32n1636_022:0135b03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是五根者相續而起，則能圓滿一切佛法。",
        "from": "T32n1636_022:0135b04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_022:0135b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於信力等法常當脩習。",
        "from": "T32n1636_022:0135b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《寶髻經》云：",
        "from": "T32n1636_022:0135b05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「善男子！",
        "from": "T32n1636_022:0135b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩力行清淨？",
        "from": "T32n1636_022:0135b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂於諸根無有怯弱，一切惡魔不能動亂，聲聞緣覺不能退轉，一切煩惱不能破壞，而能堅固安住大乘，夙願滿足心淨勇猛，密護身根得勝清淨。",
        "from": "T32n1636_022:0135b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_022:0135b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是信等根力常能修習，所修慈行增長功德。",
        "from": "T32n1636_022:0135b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《月燈經》偈云：",
        "from": "T32n1636_022:0135b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「那由他億佛剎中，　　所有種種供佛具，",
        "from": "T32n1636_022:0135b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉以供養諸如來，　　不及慈心一少分。",
        "from": "T32n1636_022:0135b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」大乘集菩薩學論卷第二十二",
        "from": "T32n1636_022:0135b14_100",
        "context_with_next_sentence": false
    }
]