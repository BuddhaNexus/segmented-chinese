{
    "T47n1997_002:0718b09_0": "圓悟佛果禪師語錄卷第二",
    "T47n1997_002:0718b11_0": "宋平江府虎丘山門人紹隆等編",
    "T47n1997_002:0718b12_0": "上堂二",
    "T47n1997_002:0718b13_0": "◎上堂。",
    "T47n1997_002:0718b13_1": "僧問。",
    "T47n1997_002:0718b13_2": "譬如擲劍揮空。",
    "T47n1997_002:0718b13_3": "有一人劍亦無。",
    "T47n1997_002:0718b14_0": "虛空亦不揮時如何。",
    "T47n1997_002:0718b14_1": "師云。",
    "T47n1997_002:0718b14_2": "大眾。",
    "T47n1997_002:0718b14_3": "見爾敗闕。",
    "T47n1997_002:0718b14_4": "進云。",
    "T47n1997_002:0718b15_5": "學人只管推出。",
    "T47n1997_002:0718b15_6": "和尚何不放行。",
    "T47n1997_002:0718b15_7": "師云。",
    "T47n1997_002:0718b15_8": "莫謗崇寧好。",
    "T47n1997_002:0718b16_9": "進云。",
    "T47n1997_002:0718b16_10": "為什麼不肯承當。",
    "T47n1997_002:0718b16_11": "師云。",
    "T47n1997_002:0718b16_12": "藏身露影。",
    "T47n1997_002:0718b17_13": "進云。",
    "T47n1997_002:0718b17_14": "今日捉敗。",
    "T47n1997_002:0718b17_15": "師云。",
    "T47n1997_002:0718b17_16": "果然。",
    "T47n1997_002:0718b17_17": "問牛頭未見四祖時如何。",
    "T47n1997_002:0718b18_18": "師云。",
    "T47n1997_002:0718b18_19": "天地莫能知。",
    "T47n1997_002:0718b18_20": "進云。",
    "T47n1997_002:0718b18_21": "見後如何。",
    "T47n1997_002:0718b19_22": "師云。",
    "T47n1997_002:0718b19_23": "古今成牓樣。",
    "T47n1997_002:0718b19_24": "進云。",
    "T47n1997_002:0718b19_25": "仁義只從貧處斷去也。",
    "T47n1997_002:0718b20_26": "師云。",
    "T47n1997_002:0718b20_27": "鬼窟裏出頭來。",
    "T47n1997_002:0718b20_28": "乃云。",
    "T47n1997_002:0718b20_29": "青欝欝碧湛湛。",
    "T47n1997_002:0718b21_30": "百草頭上泄天機。",
    "T47n1997_002:0718b21_31": "華簇簇錦簇簇。",
    "T47n1997_002:0718b21_32": "鬧市堆邊露真智。",
    "T47n1997_002:0718b22_33": "金聲玉振擲地風光。",
    "T47n1997_002:0718b22_34": "電轉星飛通天作用。",
    "T47n1997_002:0718b23_35": "不與萬法為侶。",
    "T47n1997_002:0718b23_36": "則且致。",
    "T47n1997_002:0718b23_37": "針眼魚吞却嘉州大像時如何。",
    "T47n1997_002:0718b24_38": "噁。",
    "T47n1997_002:0718b24_39": "下座。",
    "T47n1997_002:0718b25_0": "上堂。",
    "T47n1997_002:0718b25_1": "問如何是塵塵三昧。",
    "T47n1997_002:0718b25_2": "師云。",
    "T47n1997_002:0718b25_3": "點滴不施。",
    "T47n1997_002:0718b25_4": "進云。",
    "T47n1997_002:0718b26_5": "是一是二。",
    "T47n1997_002:0718b26_6": "師云。",
    "T47n1997_002:0718b26_7": "毫端寶剎。",
    "T47n1997_002:0718b26_8": "進云。",
    "T47n1997_002:0718b26_9": "兩彩一賽去也。",
    "T47n1997_002:0718b27_10": "師云。",
    "T47n1997_002:0718b27_11": "痛領一問。",
    "T47n1997_002:0718b27_12": "僧云。",
    "T47n1997_002:0718b27_13": "蒼天蒼天。",
    "T47n1997_002:0718b27_14": "師云。",
    "T47n1997_002:0718b28_15": "未領在。",
    "T47n1997_002:0718b28_16": "問世尊拈華迦葉微笑。",
    "T47n1997_002:0718b28_17": "和尚說法有何指示。",
    "T47n1997_002:0718b29_18": "師云。",
    "T47n1997_002:0718b29_19": "一物也無。",
    "T47n1997_002:0718b29_20": "進云。",
    "T47n1997_002:0718b29_21": "為什麼一物也無。",
    "T47n1997_002:0718c01_22": "師云。",
    "T47n1997_002:0718c01_23": "為爾無眼。",
    "T47n1997_002:0718c01_24": "進云。",
    "T47n1997_002:0718c01_25": "爭奈學人何。",
    "T47n1997_002:0718c01_26": "師云。",
    "T47n1997_002:0718c02_27": "一任[跳-兆+孛]跳。",
    "T47n1997_002:0718c02_28": "乃云。",
    "T47n1997_002:0718c02_29": "目前絕對待。",
    "T47n1997_002:0718c02_30": "萬境森然。",
    "T47n1997_002:0718c03_0": "物外有玄機。",
    "T47n1997_002:0718c03_1": "當陽卓犖。",
    "T47n1997_002:0718c03_2": "棒喝照用。",
    "T47n1997_002:0718c03_3": "拈向一邊。",
    "T47n1997_002:0718c04_0": "語路縱橫。",
    "T47n1997_002:0718c04_1": "放過一著。",
    "T47n1997_002:0718c04_2": "爾諸人向這裏。",
    "T47n1997_002:0718c04_3": "撥得一線路去。",
    "T47n1997_002:0718c05_4": "直下孤危倘未撥得。",
    "T47n1997_002:0718c05_5": "鼻孔盡在山僧手裏。",
    "T47n1997_002:0718c06_6": "拈拄杖云。",
    "T47n1997_002:0718c06_7": "穿却了也。",
    "T47n1997_002:0718c06_8": "擊禪床。",
    "T47n1997_002:0718c06_9": "下座。",
    "T47n1997_002:0718c07_0": "上堂。",
    "T47n1997_002:0718c07_1": "僧問。",
    "T47n1997_002:0718c07_2": "團團無縫罅。",
    "T47n1997_002:0718c07_3": "因甚麼得恁奇特。",
    "T47n1997_002:0718c07_4": "師云。",
    "T47n1997_002:0718c08_5": "七華八裂。",
    "T47n1997_002:0718c08_6": "進云。",
    "T47n1997_002:0718c08_7": "言中有響去也。",
    "T47n1997_002:0718c08_8": "師云。",
    "T47n1997_002:0718c08_9": "且緩緩。",
    "T47n1997_002:0718c09_10": "問長至一陽生。",
    "T47n1997_002:0718c09_11": "君子道長時如何。",
    "T47n1997_002:0718c09_12": "師云。",
    "T47n1997_002:0718c10_13": "衲僧門下無許多事。",
    "T47n1997_002:0718c10_14": "進云。",
    "T47n1997_002:0718c10_15": "萬法是心光又作麼生。",
    "T47n1997_002:0718c11_16": "師云。",
    "T47n1997_002:0718c11_17": "却好高著眼。",
    "T47n1997_002:0718c11_18": "進云。",
    "T47n1997_002:0718c11_19": "直下承當去也。",
    "T47n1997_002:0718c12_20": "師云。",
    "T47n1997_002:0718c12_21": "利劍揮空。",
    "T47n1997_002:0718c12_22": "乃云。",
    "T47n1997_002:0718c12_23": "離相離名絕盡絕跡。",
    "T47n1997_002:0718c13_24": "一回拈出一回新。",
    "T47n1997_002:0718c13_25": "一度用著一度快。",
    "T47n1997_002:0718c13_26": "橫該萬有竪透金輪。",
    "T47n1997_002:0718c14_27": "內沒纖毫外無點綴。",
    "T47n1997_002:0718c14_28": "若能不作聖情凡解。",
    "T47n1997_002:0718c15_29": "擔荷展演得去。",
    "T47n1997_002:0718c15_30": "入鄽垂手著著有出身之機。",
    "T47n1997_002:0718c16_31": "退處孤峯處處歷剎塵之境。",
    "T47n1997_002:0718c16_32": "恁麼中不恁麼。",
    "T47n1997_002:0718c17_33": "不恁麼中却恁麼。",
    "T47n1997_002:0718c17_34": "全提一句作麼生道。",
    "T47n1997_002:0718c18_35": "撥開向上一竅。",
    "T47n1997_002:0718c18_36": "千聖齊立下風。",
    "T47n1997_002:0718c18_37": "下座。",
    "T47n1997_002:0718c20_0": "上堂。",
    "T47n1997_002:0718c20_1": "僧問。",
    "T47n1997_002:0718c20_2": "去歲今朝今日去。",
    "T47n1997_002:0718c20_3": "今年年是去年年。",
    "T47n1997_002:0718c21_4": "如何是物不遷。",
    "T47n1997_002:0718c21_5": "師云。",
    "T47n1997_002:0718c21_6": "眉毛在眼上。",
    "T47n1997_002:0718c21_7": "進云。",
    "T47n1997_002:0718c22_0": "恁麼則改故換新去也。",
    "T47n1997_002:0718c22_1": "師云。",
    "T47n1997_002:0718c22_2": "莫錯認進云。",
    "T47n1997_002:0718c22_3": "如何是不錯認底。",
    "T47n1997_002:0718c23_4": "師云。",
    "T47n1997_002:0718c23_5": "好看取。",
    "T47n1997_002:0718c23_6": "進云。",
    "T47n1997_002:0718c23_7": "劫火洞然毫末盡。",
    "T47n1997_002:0718c24_8": "青山依舊白雲中。",
    "T47n1997_002:0718c24_9": "師云。",
    "T47n1997_002:0718c24_10": "轉得回來不直錢。",
    "T47n1997_002:0718c25_11": "問萬物維新之際。",
    "T47n1997_002:0718c25_12": "一人納慶之辰。",
    "T47n1997_002:0718c25_13": "如何是新年頭佛法。",
    "T47n1997_002:0718c26_14": "師云。",
    "T47n1997_002:0718c26_15": "孟春猶寒。",
    "T47n1997_002:0718c26_16": "進云。",
    "T47n1997_002:0718c26_17": "恁麼則法不孤起。",
    "T47n1997_002:0718c27_18": "師云。",
    "T47n1997_002:0718c27_19": "坐却主人翁。",
    "T47n1997_002:0718c27_20": "什麼處出氣。",
    "T47n1997_002:0718c28_0": "進云。",
    "T47n1997_002:0718c28_1": "長空有月千門照。",
    "T47n1997_002:0718c28_2": "師云。",
    "T47n1997_002:0718c28_3": "隨人脚跟轉。",
    "T47n1997_002:0718c28_4": "乃云。",
    "T47n1997_002:0718c29_5": "一法若有。",
    "T47n1997_002:0718c29_6": "毘盧墮在凡夫。",
    "T47n1997_002:0718c29_7": "萬法若無。",
    "T47n1997_002:0718c29_8": "普賢失其境界。",
    "T47n1997_002:0719a01_9": "一法萬法若有若無。",
    "T47n1997_002:0719a01_10": "毘盧普賢凡夫法界。",
    "T47n1997_002:0719a02_11": "盡在箇裏。",
    "T47n1997_002:0719a02_12": "好不資一毫。",
    "T47n1997_002:0719a02_13": "醜不資一毫。",
    "T47n1997_002:0719a03_0": "匝地普天內外包括。",
    "T47n1997_002:0719a03_1": "未有天地世界。",
    "T47n1997_002:0719a03_2": "已早見成。",
    "T47n1997_002:0719a04_3": "及乎萬彙資彰。",
    "T47n1997_002:0719a04_4": "凝然不變。",
    "T47n1997_002:0719a04_5": "若向一氣未兆已前。",
    "T47n1997_002:0719a05_6": "著得眼去。",
    "T47n1997_002:0719a05_7": "落第二頭。",
    "T47n1997_002:0719a05_8": "更於萬物見成之際。",
    "T47n1997_002:0719a06_9": "信得及去。",
    "T47n1997_002:0719a06_10": "轉沒交涉。",
    "T47n1997_002:0719a06_11": "新年舊歲歷歷分明一句作麼生道。",
    "T47n1997_002:0719a07_12": "日日香華夜夜燈。",
    "T47n1997_002:0719a07_13": "下座。",
    "T47n1997_002:0719a08_0": "上堂。",
    "T47n1997_002:0719a08_1": "僧問。",
    "T47n1997_002:0719a08_2": "十五日即不問。",
    "T47n1997_002:0719a08_3": "如何是和尚分明為人一句。",
    "T47n1997_002:0719a09_4": "師云。",
    "T47n1997_002:0719a09_5": "當陽見定無毫髮。",
    "T47n1997_002:0719a09_6": "擬議尋思隔萬山。",
    "T47n1997_002:0719a10_7": "問正當上元。",
    "T47n1997_002:0719a10_8": "水牯牛在什麼處。",
    "T47n1997_002:0719a10_9": "師云。",
    "T47n1997_002:0719a11_0": "鐵棒打著瘡痕露。",
    "T47n1997_002:0719a11_1": "乃云。",
    "T47n1997_002:0719a11_2": "撥塵見佛。",
    "T47n1997_002:0719a11_3": "未免眼裏撒沙。",
    "T47n1997_002:0719a12_4": "聞聲悟道。",
    "T47n1997_002:0719a12_5": "亦是耳中著水。",
    "T47n1997_002:0719a12_6": "直得生佛無階級。",
    "T47n1997_002:0719a13_7": "空界悉等平。",
    "T47n1997_002:0719a13_8": "淨躶躶絕思惟。",
    "T47n1997_002:0719a13_9": "赤灑灑沒可把。",
    "T47n1997_002:0719a14_10": "猶未離這邊事在。",
    "T47n1997_002:0719a14_11": "更須揮金剛寶劍斬斷謷訛。",
    "T47n1997_002:0719a15_12": "拈殺活拄杖打破得失。",
    "T47n1997_002:0719a15_13": "亦未明向上一竅在。",
    "T47n1997_002:0719a16_14": "儻或具大丈夫意氣。",
    "T47n1997_002:0719a16_15": "有烹佛祖鉗鎚。",
    "T47n1997_002:0719a17_0": "直下向那邊承當得。",
    "T47n1997_002:0719a17_1": "却來這裏橫三竪四坐一走七。",
    "T47n1997_002:0719a18_2": "荷負宗乘提持祖印。",
    "T47n1997_002:0719a18_3": "有時放行。",
    "T47n1997_002:0719a18_4": "同彼同此。",
    "T47n1997_002:0719a19_5": "見隨類身。",
    "T47n1997_002:0719a19_6": "和光順物。",
    "T47n1997_002:0719a19_7": "有時把住。",
    "T47n1997_002:0719a19_8": "莫道佛眼覷不見。",
    "T47n1997_002:0719a20_9": "設使盡大地草木。",
    "T47n1997_002:0719a20_10": "悉變為千百億身。",
    "T47n1997_002:0719a21_11": "放無數光明。",
    "T47n1997_002:0719a21_12": "也照不著。",
    "T47n1997_002:0719a21_13": "且道。",
    "T47n1997_002:0719a21_14": "即今作麼生。",
    "T47n1997_002:0719a22_15": "若不藍田射石虎。",
    "T47n1997_002:0719a22_16": "幾乎誤殺李將軍。",
    "T47n1997_002:0719a22_17": "下座。",
    "T47n1997_002:0719a23_0": "上堂。",
    "T47n1997_002:0719a23_1": "僧問。",
    "T47n1997_002:0719a23_2": "橫穿碧落倒卓須彌。",
    "T47n1997_002:0719a23_3": "未審是什麼人分上事。",
    "T47n1997_002:0719a24_4": "師云。",
    "T47n1997_002:0719a24_5": "入地獄人分上事。",
    "T47n1997_002:0719a24_6": "進云。",
    "T47n1997_002:0719a24_7": "却是他安身立命處。",
    "T47n1997_002:0719a25_8": "師云。",
    "T47n1997_002:0719a25_9": "瓦解氷消。",
    "T47n1997_002:0719a25_10": "進云。",
    "T47n1997_002:0719a25_11": "此心能有幾人知。",
    "T47n1997_002:0719a26_12": "師云。",
    "T47n1997_002:0719a26_13": "只恐不知。",
    "T47n1997_002:0719a26_14": "乃云。",
    "T47n1997_002:0719a26_15": "終日相逢無半面。",
    "T47n1997_002:0719a27_16": "剛然千里有知音。",
    "T47n1997_002:0719a27_17": "不須格外論奇特。",
    "T47n1997_002:0719a28_0": "只此全機耀古今。",
    "T47n1997_002:0719a28_1": "傾蓋如舊白頭如新。",
    "T47n1997_002:0719a28_2": "兩鏡相照不隔纖塵。",
    "T47n1997_002:0719a29_3": "遍界未嘗示相。",
    "T47n1997_002:0719a29_4": "毫端普現色身。",
    "T47n1997_002:0719b01_5": "止猶谷神動若行雲。",
    "T47n1997_002:0719b01_6": "相見又無事。",
    "T47n1997_002:0719b01_7": "不來還憶君。",
    "T47n1997_002:0719b02_8": "下座。",
    "T47n1997_002:0719b03_0": "上堂云。",
    "T47n1997_002:0719b03_1": "禪非意想。",
    "T47n1997_002:0719b03_2": "立意乖宗。",
    "T47n1997_002:0719b03_3": "道絕功勳。",
    "T47n1997_002:0719b03_4": "建功失旨。",
    "T47n1997_002:0719b04_5": "聞清聲外句。",
    "T47n1997_002:0719b04_6": "莫向意中求。",
    "T47n1997_002:0719b04_7": "轉照用機關。",
    "T47n1997_002:0719b05_0": "柄佛祖鉗鎚。",
    "T47n1997_002:0719b05_1": "有佛處互為賓主。",
    "T47n1997_002:0719b05_2": "無佛處風颯颯地。",
    "T47n1997_002:0719b06_3": "心寧意泰響順聲和。",
    "T47n1997_002:0719b06_4": "似恁麼人。",
    "T47n1997_002:0719b06_5": "且道。",
    "T47n1997_002:0719b06_6": "向什麼處安著。",
    "T47n1997_002:0719b07_7": "披簑側立千峯外。",
    "T47n1997_002:0719b07_8": "引水澆蔬五老前。",
    "T47n1997_002:0719b08_9": "下座。",
    "T47n1997_002:0719b09_0": "上堂云。",
    "T47n1997_002:0719b09_1": "本來是佛。",
    "T47n1997_002:0719b09_2": "無成不成。",
    "T47n1997_002:0719b09_3": "正體湛然。",
    "T47n1997_002:0719b09_4": "離出不出。",
    "T47n1997_002:0719b10_5": "本分事上直得萬里無片雲。",
    "T47n1997_002:0719b10_6": "猶未可放過。",
    "T47n1997_002:0719b11_7": "更說什麼諸餘。",
    "T47n1997_002:0719b11_8": "其或隨機。",
    "T47n1997_002:0719b11_9": "且論箇出世不出世。",
    "T47n1997_002:0719b12_10": "所以道。",
    "T47n1997_002:0719b12_11": "淨法界身本無出沒。",
    "T47n1997_002:0719b12_12": "大悲願力示現受生。",
    "T47n1997_002:0719b13_13": "且道。",
    "T47n1997_002:0719b13_14": "釋迦老子即今在什麼處。",
    "T47n1997_002:0719b13_15": "只知事逐眼前過。",
    "T47n1997_002:0719b14_16": "不覺老從頭上來。",
    "T47n1997_002:0719b14_17": "下座。",
    "T47n1997_002:0719b15_0": "上堂。",
    "T47n1997_002:0719b15_1": "僧問。",
    "T47n1997_002:0719b15_2": "了了見無一物。",
    "T47n1997_002:0719b15_3": "未審如何。",
    "T47n1997_002:0719b15_4": "師云。",
    "T47n1997_002:0719b16_0": "好箇消息。",
    "T47n1997_002:0719b16_1": "進云。",
    "T47n1997_002:0719b16_2": "功不浪施去也。",
    "T47n1997_002:0719b16_3": "師云。",
    "T47n1997_002:0719b16_4": "只恐脚不點地。",
    "T47n1997_002:0719b17_5": "進云。",
    "T47n1997_002:0719b17_6": "回頭看滸眼。",
    "T47n1997_002:0719b17_7": "特地一場愁。",
    "T47n1997_002:0719b17_8": "師云。",
    "T47n1997_002:0719b18_9": "果然浪走。",
    "T47n1997_002:0719b18_10": "僧問。",
    "T47n1997_002:0719b18_11": "學人不起一念時如何。",
    "T47n1997_002:0719b18_12": "師云。",
    "T47n1997_002:0719b19_13": "自傷己命。",
    "T47n1997_002:0719b19_14": "進云。",
    "T47n1997_002:0719b19_15": "因誰致得。",
    "T47n1997_002:0719b19_16": "師云。",
    "T47n1997_002:0719b19_17": "莫換崇寧舌頭好。",
    "T47n1997_002:0719b20_18": "問妙體本來無處所時如何。",
    "T47n1997_002:0719b20_19": "師云。",
    "T47n1997_002:0719b21_0": "腦後拔楔。",
    "T47n1997_002:0719b21_1": "問如何是玄中玄。",
    "T47n1997_002:0719b21_2": "師云。",
    "T47n1997_002:0719b21_3": "玄殺爾。",
    "T47n1997_002:0719b21_4": "進云。",
    "T47n1997_002:0719b22_5": "石人暗點頭。",
    "T47n1997_002:0719b22_6": "師云。",
    "T47n1997_002:0719b22_7": "言猶在耳。",
    "T47n1997_002:0719b22_8": "乃云。",
    "T47n1997_002:0719b22_9": "舉無遺照。",
    "T47n1997_002:0719b23_10": "十方剎海目前觀。",
    "T47n1997_002:0719b23_11": "正體堂堂大千同一真如性。",
    "T47n1997_002:0719b24_12": "各守本位去。",
    "T47n1997_002:0719b24_13": "山是山水是水。",
    "T47n1997_002:0719b24_14": "互換投機去。",
    "T47n1997_002:0719b25_15": "星辰易位祖佛潛蹤。",
    "T47n1997_002:0719b25_16": "兩處絕聱訛。",
    "T47n1997_002:0719b25_17": "二邊純莫立。",
    "T47n1997_002:0719b26_18": "無可不可悉得安居。",
    "T47n1997_002:0719b26_19": "隨時應緣凝然湛寂。",
    "T47n1997_002:0719b27_20": "且道。",
    "T47n1997_002:0719b27_21": "長養聖胎一句作麼生道。",
    "T47n1997_002:0719b27_22": "不起纖毫修學心。",
    "T47n1997_002:0719b28_23": "無相光中常自在。",
    "T47n1997_002:0719b28_24": "下座。",
    "T47n1997_002:0719b29_0": "上堂。",
    "T47n1997_002:0719b29_1": "僧問。",
    "T47n1997_002:0719b29_2": "如何是平展之機。",
    "T47n1997_002:0719b29_3": "師云。",
    "T47n1997_002:0719b29_4": "縱橫十字。",
    "T47n1997_002:0719c01_5": "進云。",
    "T47n1997_002:0719c01_6": "且得沒交涉。",
    "T47n1997_002:0719c01_7": "師云。",
    "T47n1997_002:0719c01_8": "什麼處沒交涉。",
    "T47n1997_002:0719c02_0": "僧云。",
    "T47n1997_002:0719c02_1": "腦後拔箭。",
    "T47n1997_002:0719c02_2": "師云拶。",
    "T47n1997_002:0719c02_3": "問父母非我親。",
    "T47n1997_002:0719c02_4": "誰是最親者。",
    "T47n1997_002:0719c03_5": "師云。",
    "T47n1997_002:0719c03_6": "吾常於此切。",
    "T47n1997_002:0719c03_7": "進云。",
    "T47n1997_002:0719c03_8": "諸佛非我道。",
    "T47n1997_002:0719c04_9": "誰是最道者。",
    "T47n1997_002:0719c04_10": "師云。",
    "T47n1997_002:0719c04_11": "須是有轉身處始得。",
    "T47n1997_002:0719c04_12": "僧云。",
    "T47n1997_002:0719c05_13": "欲行千里一步為初。",
    "T47n1997_002:0719c05_14": "師云。",
    "T47n1997_002:0719c05_15": "信受奉行。",
    "T47n1997_002:0719c05_16": "乃云。",
    "T47n1997_002:0719c06_17": "國無定亂之劍。",
    "T47n1997_002:0719c06_18": "四海宴清。",
    "T47n1997_002:0719c06_19": "門無白澤之圖。",
    "T47n1997_002:0719c07_0": "全家吉慶。",
    "T47n1997_002:0719c07_1": "若道有承恩力處。",
    "T47n1997_002:0719c07_2": "正是土上加泥。",
    "T47n1997_002:0719c08_0": "更或削跡吞聲。",
    "T47n1997_002:0719c08_1": "亦乃將南作北。",
    "T47n1997_002:0719c08_2": "到這裏縱橫十字。",
    "T47n1997_002:0719c09_3": "未免謷訛。",
    "T47n1997_002:0719c09_4": "據位投機。",
    "T47n1997_002:0719c09_5": "猶較些子。",
    "T47n1997_002:0719c09_6": "且作麼生是據位底句。",
    "T47n1997_002:0719c10_7": "寒山逢拾得。",
    "T47n1997_002:0719c10_8": "撫掌笑呵呵。",
    "T47n1997_002:0719c10_9": "下座。",
    "T47n1997_002:0719c12_0": "上堂。",
    "T47n1997_002:0719c12_1": "僧問。",
    "T47n1997_002:0719c12_2": "江邊臨水者。",
    "T47n1997_002:0719c12_3": "盡是採魚人。",
    "T47n1997_002:0719c12_4": "錦鱗紅尾作麼生取。",
    "T47n1997_002:0719c13_5": "師云。",
    "T47n1997_002:0719c13_6": "莫妄想。",
    "T47n1997_002:0719c13_7": "進云。",
    "T47n1997_002:0719c13_8": "不妄想時如何。",
    "T47n1997_002:0719c14_9": "師云。",
    "T47n1997_002:0719c14_10": "不計工程得便休。",
    "T47n1997_002:0719c14_11": "進云。",
    "T47n1997_002:0719c14_12": "碧潭深萬丈。",
    "T47n1997_002:0719c15_13": "直下取魚歸也。",
    "T47n1997_002:0719c15_14": "師云。",
    "T47n1997_002:0719c15_15": "更須退步。",
    "T47n1997_002:0719c15_16": "問一塵含法界時如何。",
    "T47n1997_002:0719c16_17": "師云。",
    "T47n1997_002:0719c16_18": "暗裏髑髏明世界。",
    "T47n1997_002:0719c16_19": "乃云。",
    "T47n1997_002:0719c16_20": "祖祖相傳傳底事。",
    "T47n1997_002:0719c17_21": "佛佛授手不唯他。",
    "T47n1997_002:0719c17_22": "若存情識論知解。",
    "T47n1997_002:0719c18_23": "耳裏塵沙眼內華。",
    "T47n1997_002:0719c18_24": "所以道。",
    "T47n1997_002:0719c18_25": "見聞覺知是法。",
    "T47n1997_002:0719c19_26": "法離見聞覺知。",
    "T47n1997_002:0719c19_27": "不著佛法僧求。",
    "T47n1997_002:0719c19_28": "呼喚不回。",
    "T47n1997_002:0719c20_29": "籠羅不住。",
    "T47n1997_002:0719c20_30": "更須知棒喝交馳。",
    "T47n1997_002:0719c20_31": "照用同時。",
    "T47n1997_002:0719c20_32": "向上一竅始得。",
    "T47n1997_002:0719c21_33": "且作麼生是向上一竅。",
    "T47n1997_002:0719c21_34": "鶴有九臯難翥翼。",
    "T47n1997_002:0719c22_35": "馬無千里謾追風。",
    "T47n1997_002:0719c22_36": "下座。",
    "T47n1997_002:0719c23_0": "上堂。",
    "T47n1997_002:0719c23_1": "僧問。",
    "T47n1997_002:0719c23_2": "一雨普滋。",
    "T47n1997_002:0719c23_3": "還有佛法也無。",
    "T47n1997_002:0719c23_4": "師云。",
    "T47n1997_002:0719c24_0": "全承他力。",
    "T47n1997_002:0719c24_1": "進云。",
    "T47n1997_002:0719c24_2": "頭上漫漫脚下漫漫去也。",
    "T47n1997_002:0719c24_3": "師云。",
    "T47n1997_002:0719c25_4": "也須乾剝剝始得。",
    "T47n1997_002:0719c25_5": "進云。",
    "T47n1997_002:0719c25_6": "盡大地總是教。",
    "T47n1997_002:0719c25_7": "學人如何趣入。",
    "T47n1997_002:0719c26_8": "師云。",
    "T47n1997_002:0719c26_9": "和頭沒却。",
    "T47n1997_002:0719c26_10": "進云。",
    "T47n1997_002:0719c26_11": "恁麼則兩重相見。",
    "T47n1997_002:0719c27_12": "師云。",
    "T47n1997_002:0719c27_13": "料掉沒交涉。",
    "T47n1997_002:0719c27_14": "乃云。",
    "T47n1997_002:0719c27_15": "牛頭沒馬頭回。",
    "T47n1997_002:0719c28_16": "千聖不知。",
    "T47n1997_002:0719c28_17": "前三三後三三。",
    "T47n1997_002:0719c28_18": "河沙莫算。",
    "T47n1997_002:0719c28_19": "低低處平之有餘。",
    "T47n1997_002:0719c29_20": "高高處觀之不足。",
    "T47n1997_002:0719c29_21": "東勝身洲走馬。",
    "T47n1997_002:0720a01_22": "南贍部洲著撲。",
    "T47n1997_002:0720a01_23": "扇子[跳-兆+孛]跳上天。",
    "T47n1997_002:0720a01_24": "東海鯉魚發怒。",
    "T47n1997_002:0720a02_25": "直得雨似盆傾。",
    "T47n1997_002:0720a02_26": "大千沙界悉己瀰漫。",
    "T47n1997_002:0720a02_27": "且道。",
    "T47n1997_002:0720a03_28": "是牛頭沒馬頭回。",
    "T47n1997_002:0720a03_29": "是前三三後三三。",
    "T47n1997_002:0720a03_30": "海神知貴不知價。",
    "T47n1997_002:0720a04_31": "留向人間光照夜。",
    "T47n1997_002:0720a04_32": "下座。",
    "T47n1997_002:0720a05_0": "上堂云。",
    "T47n1997_002:0720a05_1": "棒頭取證。",
    "T47n1997_002:0720a05_2": "撤土撒沙。",
    "T47n1997_002:0720a05_3": "喝下承當。",
    "T47n1997_002:0720a05_4": "承虛接響。",
    "T47n1997_002:0720a06_5": "向上向下。",
    "T47n1997_002:0720a06_6": "轉更顢頇。",
    "T47n1997_002:0720a06_7": "說妙談玄。",
    "T47n1997_002:0720a06_8": "和泥合水。",
    "T47n1997_002:0720a07_9": "這一片田地。",
    "T47n1997_002:0720a07_10": "分付來多時也。",
    "T47n1997_002:0720a07_11": "平白欺人。",
    "T47n1997_002:0720a08_0": "盡大地撮來如粟米粒大。",
    "T47n1997_002:0720a08_1": "掉棒打月。",
    "T47n1997_002:0720a08_2": "佛祖凡聖拈向一邊。",
    "T47n1997_002:0720a09_3": "總不依倚時如何。",
    "T47n1997_002:0720a09_4": "紅霞穿碧海。",
    "T47n1997_002:0720a10_0": "白日遶須彌。",
    "T47n1997_002:0720a10_1": "下座。",
    "T47n1997_002:0720a11_0": "上堂。",
    "T47n1997_002:0720a11_1": "僧問。",
    "T47n1997_002:0720a11_2": "生死交謝寒暑迭遷。",
    "T47n1997_002:0720a11_3": "未審無位真人還有寒暑也無。",
    "T47n1997_002:0720a12_4": "師云。",
    "T47n1997_002:0720a12_5": "汗流似雨。",
    "T47n1997_002:0720a12_6": "進云。",
    "T47n1997_002:0720a12_7": "分明在目前也。",
    "T47n1997_002:0720a13_8": "師云。",
    "T47n1997_002:0720a13_9": "莫向目前作窠窟。",
    "T47n1997_002:0720a13_10": "進云。",
    "T47n1997_002:0720a13_11": "爭奈即今何。",
    "T47n1997_002:0720a14_12": "師云。",
    "T47n1997_002:0720a14_13": "鈍置阿師。",
    "T47n1997_002:0720a14_14": "乃云。",
    "T47n1997_002:0720a14_15": "暑氣蒸人如墮甑。",
    "T47n1997_002:0720a15_16": "四肢流汗似澆湯。",
    "T47n1997_002:0720a15_17": "賴他白羽全施力。",
    "T47n1997_002:0720a15_18": "引得清飈一襲涼。",
    "T47n1997_002:0720a16_19": "諸人還覺寒毛卓竪麼。",
    "T47n1997_002:0720a16_20": "劄。",
    "T47n1997_002:0720a16_21": "下座。",
    "T47n1997_002:0720a18_0": "上堂。",
    "T47n1997_002:0720a18_1": "僧問。",
    "T47n1997_002:0720a18_2": "須彌山意旨如何。",
    "T47n1997_002:0720a18_3": "師云。",
    "T47n1997_002:0720a18_4": "推不向前。",
    "T47n1997_002:0720a19_5": "約不退後。",
    "T47n1997_002:0720a19_6": "進云。",
    "T47n1997_002:0720a19_7": "未審還有過也無。",
    "T47n1997_002:0720a19_8": "師云。",
    "T47n1997_002:0720a20_0": "坐却舌頭。",
    "T47n1997_002:0720a20_1": "問法不孤起仗境方生。",
    "T47n1997_002:0720a20_2": "提坐具云。",
    "T47n1997_002:0720a21_0": "這箇是境。",
    "T47n1997_002:0720a21_1": "如何是法。",
    "T47n1997_002:0720a21_2": "師云。",
    "T47n1997_002:0720a21_3": "却被闍梨奪却槍。",
    "T47n1997_002:0720a22_0": "進云。",
    "T47n1997_002:0720a22_1": "和尚今日為什麼退己讓人。",
    "T47n1997_002:0720a22_2": "師云。",
    "T47n1997_002:0720a22_3": "只有先鋒無殿後。",
    "T47n1997_002:0720a23_4": "進云。",
    "T47n1997_002:0720a23_5": "未審如何是殿後。",
    "T47n1997_002:0720a23_6": "師云。",
    "T47n1997_002:0720a23_7": "還我話頭來。",
    "T47n1997_002:0720a24_8": "乃云。",
    "T47n1997_002:0720a24_9": "田地穩密底。",
    "T47n1997_002:0720a24_10": "擡脚不起。",
    "T47n1997_002:0720a24_11": "探頭太過。",
    "T47n1997_002:0720a25_12": "神通妙用底。",
    "T47n1997_002:0720a25_13": "放脚不下。",
    "T47n1997_002:0720a25_14": "收身未轉。",
    "T47n1997_002:0720a25_15": "直饒十字縱橫朝打三千。",
    "T47n1997_002:0720a26_16": "猶較些子。",
    "T47n1997_002:0720a26_17": "且道。",
    "T47n1997_002:0720a26_18": "謷訛在什麼處。",
    "T47n1997_002:0720a27_19": "若知有去。",
    "T47n1997_002:0720a27_20": "始見全提半提。",
    "T47n1997_002:0720a27_21": "儻或未知。",
    "T47n1997_002:0720a28_0": "布袋裏老鴉雖活如死。",
    "T47n1997_002:0720a28_1": "下座。",
    "T47n1997_002:0720a29_0": "上堂。",
    "T47n1997_002:0720a29_1": "僧問。",
    "T47n1997_002:0720a29_2": "南泉斬猫兒意旨如何。",
    "T47n1997_002:0720a29_3": "師云。",
    "T47n1997_002:0720a29_4": "殺活臨時。",
    "T47n1997_002:0720b01_5": "進云。",
    "T47n1997_002:0720b01_6": "趙州戴草鞋又作麼生。",
    "T47n1997_002:0720b01_7": "師云。",
    "T47n1997_002:0720b01_8": "是他屋裏事。",
    "T47n1997_002:0720b02_9": "進云。",
    "T47n1997_002:0720b02_10": "打鼓弄琵琶去也。",
    "T47n1997_002:0720b02_11": "師云。",
    "T47n1997_002:0720b02_12": "且莫詐明頭。",
    "T47n1997_002:0720b03_13": "乃云。",
    "T47n1997_002:0720b03_14": "有佛處羅籠不住。",
    "T47n1997_002:0720b03_15": "無佛處荒草尋人。",
    "T47n1997_002:0720b04_16": "放行也觸處光新。",
    "T47n1997_002:0720b04_17": "把住也乾坤陡變。",
    "T47n1997_002:0720b04_18": "且道。",
    "T47n1997_002:0720b05_0": "向上人來時如何。",
    "T47n1997_002:0720b05_1": "他家自有通霄路。",
    "T47n1997_002:0720b05_2": "下座。",
    "T47n1997_002:0720b06_0": "上堂云。",
    "T47n1997_002:0720b06_1": "休夏自恣海眾常規。",
    "T47n1997_002:0720b06_2": "秋色澄清乾坤肅殺。",
    "T47n1997_002:0720b07_3": "般若流運動靜一如。",
    "T47n1997_002:0720b07_4": "時節不相饒。",
    "T47n1997_002:0720b07_5": "炎涼倐改變。",
    "T47n1997_002:0720b08_6": "無生曲調韻出清霄。",
    "T47n1997_002:0720b08_7": "至寶常軒光吞萬象。",
    "T47n1997_002:0720b09_8": "古今不覆蓋。",
    "T47n1997_002:0720b09_9": "見在沒遮襴。",
    "T47n1997_002:0720b09_10": "一念不落諸緣。",
    "T47n1997_002:0720b10_11": "證取自家境界。",
    "T47n1997_002:0720b10_12": "何必靈山覓佛少林問祖。",
    "T47n1997_002:0720b11_0": "會麼。",
    "T47n1997_002:0720b11_1": "解開布袋無拘束。",
    "T47n1997_002:0720b11_2": "切更勤看水牯牛。",
    "T47n1997_002:0720b11_3": "下座。",
    "T47n1997_002:0720b13_0": "上堂云。",
    "T47n1997_002:0720b13_1": "一言截斷千聖消聲。",
    "T47n1997_002:0720b13_2": "一劍當前橫屍萬里。",
    "T47n1997_002:0720b14_3": "所以道。",
    "T47n1997_002:0720b14_4": "有時句到意不到。",
    "T47n1997_002:0720b14_5": "有時意到句不到。",
    "T47n1997_002:0720b15_6": "句能剗意意能剗句。",
    "T47n1997_002:0720b15_7": "意句交馳衲僧巴鼻。",
    "T47n1997_002:0720b16_8": "若能恁麼轉去。",
    "T47n1997_002:0720b16_9": "青天也須喫棒。",
    "T47n1997_002:0720b16_10": "且道。",
    "T47n1997_002:0720b16_11": "憑箇什麼。",
    "T47n1997_002:0720b17_12": "可憐無限弄潮人。",
    "T47n1997_002:0720b17_13": "畢竟還落潮中死。",
    "T47n1997_002:0720b18_0": "下座。",
    "T47n1997_002:0720b19_0": "上堂云。",
    "T47n1997_002:0720b19_1": "殺人刀活人劍。",
    "T47n1997_002:0720b19_2": "上古之風規。",
    "T47n1997_002:0720b19_3": "亦是今時之樞要。",
    "T47n1997_002:0720b20_4": "言句上作解會。",
    "T47n1997_002:0720b20_5": "泥裏洗土塊。",
    "T47n1997_002:0720b20_6": "不向言句上會。",
    "T47n1997_002:0720b21_7": "方木逗圓孔。",
    "T47n1997_002:0720b21_8": "未擬議已蹉過。",
    "T47n1997_002:0720b21_9": "正擬議隔關山。",
    "T47n1997_002:0720b22_10": "擊石火閃電光。",
    "T47n1997_002:0720b22_11": "搆得搆不得。",
    "T47n1997_002:0720b22_12": "未免喪身失命。",
    "T47n1997_002:0720b23_13": "且道。",
    "T47n1997_002:0720b23_14": "此理如何。",
    "T47n1997_002:0720b23_15": "苦瓠連根苦。",
    "T47n1997_002:0720b23_16": "甜苽徹蔕甜。",
    "T47n1997_002:0720b24_17": "下座。",
    "T47n1997_002:0720b25_0": "上堂云。",
    "T47n1997_002:0720b25_1": "雲騰致雨世界索然。",
    "T47n1997_002:0720b25_2": "日照天臨乾坤廓爾。",
    "T47n1997_002:0720b26_3": "文殊堂裏萬菩薩縱然顯現。",
    "T47n1997_002:0720b26_4": "晴是晴雨是雨。",
    "T47n1997_002:0720b27_5": "山是山水是水。",
    "T47n1997_002:0720b27_6": "阿那箇是萬菩薩。",
    "T47n1997_002:0720b27_7": "風暖鳥聲碎。",
    "T47n1997_002:0720b28_8": "日高華影重。",
    "T47n1997_002:0720b28_9": "下座。",
    "T47n1997_002:0720b29_0": "上堂云。",
    "T47n1997_002:0720b29_1": "定乾坤句包古括今。",
    "T47n1997_002:0720b29_2": "透生死關超聲越色。",
    "T47n1997_002:0720c01_3": "鬼窟活計百千萬劫難出頭。",
    "T47n1997_002:0720c01_4": "截斷眾流。",
    "T47n1997_002:0720c02_0": "一片虛凝沒依倚。",
    "T47n1997_002:0720c02_1": "設使乾坤倒覆大海翻騰。",
    "T47n1997_002:0720c03_0": "草木叢林悉皆化為刀槍矛盾。",
    "T47n1997_002:0720c03_1": "也動他一點不得。",
    "T47n1997_002:0720c04_2": "且道。",
    "T47n1997_002:0720c04_3": "憑箇什麼恁麼地。",
    "T47n1997_002:0720c04_4": "手執夜明符。",
    "T47n1997_002:0720c04_5": "幾箇知天曉。",
    "T47n1997_002:0720c05_6": "下座。",
    "T47n1997_002:0720c06_0": "上堂云。",
    "T47n1997_002:0720c06_1": "眨上眉毛早蹉過。",
    "T47n1997_002:0720c06_2": "塞却眼更形言語。",
    "T47n1997_002:0720c07_0": "轉周遮合取口。",
    "T47n1997_002:0720c07_1": "盡大地都為一塵。",
    "T47n1997_002:0720c07_2": "佛眼覷不見。",
    "T47n1997_002:0720c08_3": "一大藏都為一句。",
    "T47n1997_002:0720c08_4": "海口莫能宣。",
    "T47n1997_002:0720c08_5": "也未提得一半在。",
    "T47n1997_002:0720c09_6": "忽然踏破化城時如何。",
    "T47n1997_002:0720c09_7": "行到水窮處。",
    "T47n1997_002:0720c10_0": "坐看雲起時。",
    "T47n1997_002:0720c10_1": "下座。",
    "T47n1997_002:0720c11_0": "上堂云。",
    "T47n1997_002:0720c11_1": "風清戶牖明明古鏡高懸光射斗牛。",
    "T47n1997_002:0720c12_0": "凜凜太阿橫按。",
    "T47n1997_002:0720c12_1": "外魔臨之膽慴。",
    "T47n1997_002:0720c12_2": "妖邪擬之魂亡。",
    "T47n1997_002:0720c13_3": "千聖拱手歸降。",
    "T47n1997_002:0720c13_4": "十方居然坐斷。",
    "T47n1997_002:0720c13_5": "外絕四維內絕理事。",
    "T47n1997_002:0720c14_6": "直下便是。",
    "T47n1997_002:0720c14_7": "諸人還見麼。",
    "T47n1997_002:0720c14_8": "不離當處常湛然。",
    "T47n1997_002:0720c15_9": "覓則知君不可見。",
    "T47n1997_002:0720c15_10": "下座。",
    "T47n1997_002:0720c16_0": "退院歸辭眾。",
    "T47n1997_002:0720c16_1": "上堂云。",
    "T47n1997_002:0720c16_2": "未有長行而不住。",
    "T47n1997_002:0720c16_3": "未有長住而不行。",
    "T47n1997_002:0720c17_4": "為無為益無益。",
    "T47n1997_002:0720c17_5": "梯航三有津濟四生。",
    "T47n1997_002:0720c18_6": "是衲僧家本分事。",
    "T47n1997_002:0720c18_7": "雖然時節到來一刀兩段。",
    "T47n1997_002:0720c19_8": "要且鼻孔不在別人手裏。",
    "T47n1997_002:0720c19_9": "所以道。",
    "T47n1997_002:0720c19_10": "動若行雲。",
    "T47n1997_002:0720c20_11": "止猶谷神。",
    "T47n1997_002:0720c20_12": "既無心於彼此。",
    "T47n1997_002:0720c20_13": "亦無象於去來。",
    "T47n1997_002:0720c21_14": "如是則去來不以象。",
    "T47n1997_002:0720c21_15": "動靜不以形。",
    "T47n1997_002:0720c21_16": "豈不綽綽然有餘裕哉。",
    "T47n1997_002:0720c22_17": "且道。",
    "T47n1997_002:0720c22_18": "臨行一句作麼生道。",
    "T47n1997_002:0720c22_19": "本是林下人。",
    "T47n1997_002:0720c23_20": "却歸林下去。",
    "T47n1997_002:0720c23_21": "下座。",
    "T47n1997_002:0720c23_22": "◎住夾山。",
    "T47n1997_002:0720c24_23": "◎師在公安天寧受請。",
    "T47n1997_002:0720c24_24": "拈帖示眾云。",
    "T47n1997_002:0720c25_25": "百草頭上薦取。",
    "T47n1997_002:0720c25_26": "爭如箇裏承當。",
    "T47n1997_002:0720c25_27": "既然符到奉行。",
    "T47n1997_002:0720c26_28": "豈可當爐避火。",
    "T47n1997_002:0720c26_29": "若也見得。",
    "T47n1997_002:0720c26_30": "坐斷一切人舌頭。",
    "T47n1997_002:0720c27_31": "苟或未然。",
    "T47n1997_002:0720c27_32": "却請維那剖露。",
    "T47n1997_002:0720c28_0": "師指法座云。",
    "T47n1997_002:0720c28_1": "毘耶借座燈王。",
    "T47n1997_002:0720c28_2": "萬壽燈王借座。",
    "T47n1997_002:0720c29_0": "且道。",
    "T47n1997_002:0720c29_1": "是同是別。",
    "T47n1997_002:0720c29_2": "還委悉麼。",
    "T47n1997_002:0720c29_3": "幸自可憐生。",
    "T47n1997_002:0720c29_4": "應須高著眼。",
    "T47n1997_002:0721a02_0": "陞座示眾云。",
    "T47n1997_002:0721a02_1": "鉤頭有餌。",
    "T47n1997_002:0721a02_2": "句裏無私。",
    "T47n1997_002:0721a02_3": "已泛扁舟。",
    "T47n1997_002:0721a03_0": "放行綸線。",
    "T47n1997_002:0721a03_1": "還有衝浪錦鱗麼。",
    "T47n1997_002:0721a03_2": "僧出云有。",
    "T47n1997_002:0721a03_3": "師云。",
    "T47n1997_002:0721a04_0": "高著眼。",
    "T47n1997_002:0721a04_1": "僧擬議。",
    "T47n1997_002:0721a04_2": "師云著。",
    "T47n1997_002:0721a04_3": "問錦官罷釣。",
    "T47n1997_002:0721a04_4": "澤國重遊。",
    "T47n1997_002:0721a05_5": "方為萬壽之賓。",
    "T47n1997_002:0721a05_6": "又作碧巖之主。",
    "T47n1997_002:0721a05_7": "流水下山即不問。",
    "T47n1997_002:0721a06_8": "白雲歸洞意如何。",
    "T47n1997_002:0721a06_9": "師云。",
    "T47n1997_002:0721a06_10": "舊店新開。",
    "T47n1997_002:0721a06_11": "進云。",
    "T47n1997_002:0721a07_12": "好音在耳人皆聳。",
    "T47n1997_002:0721a07_13": "一句無私亘古今。",
    "T47n1997_002:0721a07_14": "師云。",
    "T47n1997_002:0721a08_0": "大家在這裏。",
    "T47n1997_002:0721a08_1": "進云。",
    "T47n1997_002:0721a08_2": "萬丈白雲藏不得。",
    "T47n1997_002:0721a08_3": "一輪光透照無私。",
    "T47n1997_002:0721a09_4": "師云。",
    "T47n1997_002:0721a09_5": "到家一句作麼生道。",
    "T47n1997_002:0721a09_6": "僧擬議。",
    "T47n1997_002:0721a10_0": "師云了。",
    "T47n1997_002:0721a10_1": "師乃云。",
    "T47n1997_002:0721a10_2": "目前無異草。",
    "T47n1997_002:0721a10_3": "遍界絕遮欄。",
    "T47n1997_002:0721a10_4": "域中日月斬新。",
    "T47n1997_002:0721a11_5": "方外乾坤獨露。",
    "T47n1997_002:0721a11_6": "直得龍天釋梵動地雨華。",
    "T47n1997_002:0721a12_7": "妙德空生目瞪口呿。",
    "T47n1997_002:0721a12_8": "行棒行喝拈向一邊。",
    "T47n1997_002:0721a13_9": "雲月溪山放過一著。",
    "T47n1997_002:0721a13_10": "一處透脫。",
    "T47n1997_002:0721a13_11": "千處百處該通。",
    "T47n1997_002:0721a14_12": "一機洞明。",
    "T47n1997_002:0721a14_13": "千機萬機圓轉。",
    "T47n1997_002:0721a14_14": "碧巖不離此處。",
    "T47n1997_002:0721a15_15": "此處不離碧巖。",
    "T47n1997_002:0721a15_16": "攝大千於毫端。",
    "T47n1997_002:0721a15_17": "融芥塵於剎海。",
    "T47n1997_002:0721a16_18": "銜華鳥過抱子猿歸。",
    "T47n1997_002:0721a16_19": "湛寂凝然。",
    "T47n1997_002:0721a16_20": "應真不借則且致。",
    "T47n1997_002:0721a17_21": "只如無陰陽地上。",
    "T47n1997_002:0721a17_22": "成得箇什麼邊事。",
    "T47n1997_002:0721a18_23": "萬卉正資和氣力。",
    "T47n1997_002:0721a18_24": "碧巖先發一枝春。",
    "T47n1997_002:0721a19_0": "復舉。",
    "T47n1997_002:0721a19_1": "馬大師問藥山。",
    "T47n1997_002:0721a19_2": "子在此許多時。",
    "T47n1997_002:0721a19_3": "本分事作麼生。",
    "T47n1997_002:0721a20_4": "山云。",
    "T47n1997_002:0721a20_5": "皮膚脫落盡。",
    "T47n1997_002:0721a20_6": "唯有一真實。",
    "T47n1997_002:0721a20_7": "祖云。",
    "T47n1997_002:0721a21_8": "據汝所見。",
    "T47n1997_002:0721a21_9": "可謂協於心體而布四肢。",
    "T47n1997_002:0721a21_10": "何不將三條篾。",
    "T47n1997_002:0721a22_11": "束取肚皮。",
    "T47n1997_002:0721a22_12": "隨處住山去。",
    "T47n1997_002:0721a22_13": "山云。",
    "T47n1997_002:0721a22_14": "某甲何人敢言住山。",
    "T47n1997_002:0721a23_15": "祖云。",
    "T47n1997_002:0721a23_16": "不然。",
    "T47n1997_002:0721a23_17": "未有長行而不住。",
    "T47n1997_002:0721a24_0": "未有長住而不行。",
    "T47n1997_002:0721a24_1": "欲益無所益。",
    "T47n1997_002:0721a24_2": "欲為無所為。",
    "T47n1997_002:0721a25_0": "宜作舟航。",
    "T47n1997_002:0721a25_1": "由是住山。",
    "T47n1997_002:0721a25_2": "師云。",
    "T47n1997_002:0721a25_3": "大眾古人得意之後不忘利生。",
    "T47n1997_002:0721a26_4": "直入深山提持宗要。",
    "T47n1997_002:0721a26_5": "山僧暗昧。",
    "T47n1997_002:0721a27_0": "豈敢仰攀。",
    "T47n1997_002:0721a27_1": "如是則更不用篾束肚皮。",
    "T47n1997_002:0721a27_2": "却有箇折脚鐺子。",
    "T47n1997_002:0721a28_3": "與方來共守寂寥。",
    "T47n1997_002:0721a28_4": "若信得及。",
    "T47n1997_002:0721a28_5": "不在忉忉。",
    "T47n1997_002:0721a29_6": "或未諳詳。",
    "T47n1997_002:0721a29_7": "聽取箇末後句。",
    "T47n1997_002:0721a29_8": "高峯突兀倚天門。",
    "T47n1997_002:0721b01_9": "青嶂虛閑可垜跟。",
    "T47n1997_002:0721b01_10": "折脚鐺兒幸然在。",
    "T47n1997_002:0721b01_11": "不妨携去隱深雲。",
    "T47n1997_002:0721b02_12": "雖然如是。",
    "T47n1997_002:0721b02_13": "也須是大家出一隻手始得。",
    "T47n1997_002:0721b03_14": "且道。",
    "T47n1997_002:0721b03_15": "畢竟如何。",
    "T47n1997_002:0721b03_16": "妙舞應須誇遍拍。",
    "T47n1997_002:0721b04_0": "三臺須是大家催。",
    "T47n1997_002:0721b05_0": "師入院。",
    "T47n1997_002:0721b05_1": "指方丈云。",
    "T47n1997_002:0721b05_2": "箇是毘耶據坐處。",
    "T47n1997_002:0721b05_3": "正同摩竭令行時。",
    "T47n1997_002:0721b06_4": "夾山頂[寧*頁]通一竅。",
    "T47n1997_002:0721b06_5": "放出天彭老古錐。",
    "T47n1997_002:0721b07_6": "既放伊出頭。",
    "T47n1997_002:0721b07_7": "且道。",
    "T47n1997_002:0721b07_8": "作得箇什麼伎倆。",
    "T47n1997_002:0721b07_9": "衝浪錦鱗來入罟。",
    "T47n1997_002:0721b08_10": "漫天網舉不饒伊。",
    "T47n1997_002:0721b09_0": "師指法座云。",
    "T47n1997_002:0721b09_1": "大眾。",
    "T47n1997_002:0721b09_2": "還識寶華王麼。",
    "T47n1997_002:0721b09_3": "更不落二落三。",
    "T47n1997_002:0721b10_4": "便敷座云。",
    "T47n1997_002:0721b10_5": "野猿抱子歸青嶂。",
    "T47n1997_002:0721b10_6": "幽鳥銜華過碧巖。",
    "T47n1997_002:0721b11_7": "此地昔時曾作客。",
    "T47n1997_002:0721b11_8": "今茲為主愧無慚。",
    "T47n1997_002:0721b12_0": "眾中還有辯得賓主底衲僧麼。",
    "T47n1997_002:0721b12_1": "僧問。",
    "T47n1997_002:0721b12_2": "雨細柳拕金線。",
    "T47n1997_002:0721b13_3": "風和華綻錦屏。",
    "T47n1997_002:0721b13_4": "雲月溪山即不問。",
    "T47n1997_002:0721b13_5": "到家一句若為論。",
    "T47n1997_002:0721b14_6": "師云。",
    "T47n1997_002:0721b14_7": "坐斷天下人舌頭。",
    "T47n1997_002:0721b14_8": "進云。",
    "T47n1997_002:0721b15_0": "只如尖新底事又作麼生。",
    "T47n1997_002:0721b15_1": "師云。",
    "T47n1997_002:0721b15_2": "爾還識得舌頭麼。",
    "T47n1997_002:0721b16_3": "進云。",
    "T47n1997_002:0721b16_4": "雲到碧巖千仞翠。",
    "T47n1997_002:0721b16_5": "月當青嶂萬溪春。",
    "T47n1997_002:0721b17_6": "師云。",
    "T47n1997_002:0721b17_7": "更進一步始得。",
    "T47n1997_002:0721b17_8": "進云。",
    "T47n1997_002:0721b17_9": "莫便是摩竭令也無。",
    "T47n1997_002:0721b18_10": "師云。",
    "T47n1997_002:0721b18_11": "放爾三十棒。",
    "T47n1997_002:0721b18_12": "師乃云。",
    "T47n1997_002:0721b18_13": "門下青山潑黛。",
    "T47n1997_002:0721b19_14": "途中細雨如膏。",
    "T47n1997_002:0721b19_15": "靈雲陌上桃華。",
    "T47n1997_002:0721b19_16": "處處芳菲溢目。",
    "T47n1997_002:0721b20_17": "香嚴巖畔翠竹。",
    "T47n1997_002:0721b20_18": "時時撼影搖風。",
    "T47n1997_002:0721b20_19": "直得一擊忘所知。",
    "T47n1997_002:0721b21_20": "一見絕疑惑。",
    "T47n1997_002:0721b21_21": "不免尚留觀聽未透聲色。",
    "T47n1997_002:0721b22_22": "若能見無見之色。",
    "T47n1997_002:0721b22_23": "聞無聞之聲。",
    "T47n1997_002:0721b22_24": "撥轉路頭踏翻關捩。",
    "T47n1997_002:0721b23_25": "句句超佛越祖。",
    "T47n1997_002:0721b23_26": "塵塵耀古騰今。",
    "T47n1997_002:0721b24_0": "處處離色絕名。",
    "T47n1997_002:0721b24_1": "箇箇斬釘截鐵。",
    "T47n1997_002:0721b24_2": "心外無法法外無心。",
    "T47n1997_002:0721b25_3": "用王庫刀發十鈞弩。",
    "T47n1997_002:0721b25_4": "壁立萬仞坐斷十方。",
    "T47n1997_002:0721b26_5": "可以入大解脫門傳正法眼藏。",
    "T47n1997_002:0721b26_6": "向堯時舜日共樂昇平。",
    "T47n1997_002:0721b27_7": "鼓腹謳歌歸家穩坐。",
    "T47n1997_002:0721b27_8": "且到家一句作麼生道。",
    "T47n1997_002:0721b28_9": "但願春風齊著力。",
    "T47n1997_002:0721b28_10": "一時吹入我門來。",
    "T47n1997_002:0721b29_11": "復云。",
    "T47n1997_002:0721b29_12": "昔傳明有通天作略跨海神機。",
    "T47n1997_002:0721c01_0": "使無舌人說無義語。",
    "T47n1997_002:0721c01_1": "收洛浦接青峯。",
    "T47n1997_002:0721c01_2": "辨石霜賞佛日。",
    "T47n1997_002:0721c02_3": "險崖句峻陷虎機深。",
    "T47n1997_002:0721c02_4": "電激星飛珠回玉轉。",
    "T47n1997_002:0721c03_5": "建茲寶剎風範具存。",
    "T47n1997_002:0721c03_6": "而山僧庶事不才。",
    "T47n1997_002:0721c04_0": "何以繼其高躅。",
    "T47n1997_002:0721c04_1": "既辭讓不及轉透無門。",
    "T47n1997_002:0721c04_2": "不免借一條路。",
    "T47n1997_002:0721c05_3": "向無言處演言。",
    "T47n1997_002:0721c05_4": "無事處生事。",
    "T47n1997_002:0721c05_5": "無佛處現佛。",
    "T47n1997_002:0721c06_6": "無祖處示祖。",
    "T47n1997_002:0721c06_7": "且貴始末相符。",
    "T47n1997_002:0721c06_8": "頭正尾正。",
    "T47n1997_002:0721c07_9": "敢問諸人。",
    "T47n1997_002:0721c07_10": "還見夾山老子麼。",
    "T47n1997_002:0721c07_11": "莫從百草巔頭薦。",
    "T47n1997_002:0721c08_12": "覿面無私亘古今。",
    "T47n1997_002:0721c09_0": "澧州權郡張朝散。",
    "T47n1997_002:0721c09_1": "請師就香積院開堂。",
    "T47n1997_002:0721c09_2": "師於權府手中接得疏。",
    "T47n1997_002:0721c10_3": "示眾云。",
    "T47n1997_002:0721c10_4": "言言錦繡句句珠璣。",
    "T47n1997_002:0721c11_5": "讚無上乘顯正法眼。",
    "T47n1997_002:0721c11_6": "應須未舉已前薦取。",
    "T47n1997_002:0721c12_0": "文彩之外承當。",
    "T47n1997_002:0721c12_1": "苟或未然。",
    "T47n1997_002:0721c12_2": "却請宣過。",
    "T47n1997_002:0721c13_0": "師指法座云。",
    "T47n1997_002:0721c13_1": "大眾見麼。",
    "T47n1997_002:0721c13_2": "寶華王座列祖共登。",
    "T47n1997_002:0721c14_0": "車不橫推理無曲斷。",
    "T47n1997_002:0721c14_1": "便陞座拈香云。",
    "T47n1997_002:0721c14_2": "此一瓣香。",
    "T47n1997_002:0721c15_3": "奉為今上皇帝。",
    "T47n1997_002:0721c15_4": "祝嚴聖壽萬歲萬歲萬萬歲。",
    "T47n1997_002:0721c16_5": "伏願。",
    "T47n1997_002:0721c16_6": "叡算等乾坤。",
    "T47n1997_002:0721c16_7": "聖明逾日月。",
    "T47n1997_002:0721c16_8": "龍圖鳳曆彌億萬年。",
    "T47n1997_002:0721c17_9": "玉葉金枝亘百千刧。",
    "T47n1997_002:0721c17_10": "次拈香。",
    "T47n1997_002:0721c17_11": "奉為權府通判朝請檢法。",
    "T47n1997_002:0721c18_12": "在坐尊官諸衙勳貴。",
    "T47n1997_002:0721c18_13": "伏願。",
    "T47n1997_002:0721c19_14": "高遷祿位永固壽基。",
    "T47n1997_002:0721c19_15": "又拈香云。",
    "T47n1997_002:0721c19_16": "此一瓣香。",
    "T47n1997_002:0721c20_0": "淮甸昔年酬價。",
    "T47n1997_002:0721c20_1": "錦官舊日曾拈。",
    "T47n1997_002:0721c20_2": "如今海眾要知。",
    "T47n1997_002:0721c21_3": "不免分明說破。",
    "T47n1997_002:0721c21_4": "奉為蘄州五祖山第十二代故演禪師。",
    "T47n1997_002:0721c22_5": "爇向爐中。",
    "T47n1997_002:0721c22_6": "與天下衲僧出氣。",
    "T47n1997_002:0721c22_7": "遂敷坐。",
    "T47n1997_002:0721c23_8": "洛浦和尚白槌云。",
    "T47n1997_002:0721c23_9": "法筵龍象眾。",
    "T47n1997_002:0721c23_10": "當觀第一義。",
    "T47n1997_002:0721c24_11": "師云。",
    "T47n1997_002:0721c24_12": "早是第二了也。",
    "T47n1997_002:0721c24_13": "若論勝義諦中真勝義。",
    "T47n1997_002:0721c25_14": "文彩未兆一槌未落。",
    "T47n1997_002:0721c25_15": "把斷要津不通凡聖。",
    "T47n1997_002:0721c26_16": "不於言下薦。",
    "T47n1997_002:0721c26_17": "不向意中求。",
    "T47n1997_002:0721c26_18": "既然草偃風行。",
    "T47n1997_002:0721c27_0": "不免隨波逐浪。",
    "T47n1997_002:0721c27_1": "還有共相證據者麼。",
    "T47n1997_002:0721c27_2": "師乃云。",
    "T47n1997_002:0721c28_0": "爍迦羅眼頂上放大光明。",
    "T47n1997_002:0721c28_1": "摩醯首羅面門現奇特相。",
    "T47n1997_002:0721c29_2": "一言含眾象。",
    "T47n1997_002:0721c29_3": "一句逗群機。",
    "T47n1997_002:0721c29_4": "何止猛虎穴裏橫身。",
    "T47n1997_002:0722a01_5": "萬仞峯頭側足。",
    "T47n1997_002:0722a01_6": "所以道。",
    "T47n1997_002:0722a01_7": "顯大機明大用。",
    "T47n1997_002:0722a02_8": "得失俱喪是非杳忘。",
    "T47n1997_002:0722a02_9": "絕塵絕跡透色透聲。",
    "T47n1997_002:0722a03_10": "重重無盡事事圓融。",
    "T47n1997_002:0722a03_11": "又如華嚴法界無邊香水海。",
    "T47n1997_002:0722a04_12": "不可說浮幢王剎。",
    "T47n1997_002:0722a04_13": "盡向這裏一時開現。",
    "T47n1997_002:0722a05_14": "即此現成。",
    "T47n1997_002:0722a05_15": "即此受用。",
    "T47n1997_002:0722a05_16": "不以眼見。",
    "T47n1997_002:0722a05_17": "不以耳聞。",
    "T47n1997_002:0722a06_18": "不以口談。",
    "T47n1997_002:0722a06_19": "不以心知。",
    "T47n1997_002:0722a06_20": "還證得麼。",
    "T47n1997_002:0722a06_21": "若也證得。",
    "T47n1997_002:0722a07_22": "不必覺城東際初見文殊。",
    "T47n1997_002:0722a07_23": "樓閣門開方參慈氏。",
    "T47n1997_002:0722a08_24": "敢問大眾。",
    "T47n1997_002:0722a08_25": "且道。",
    "T47n1997_002:0722a08_26": "即今是什麼人境界。",
    "T47n1997_002:0722a08_27": "舉拂子云。",
    "T47n1997_002:0722a09_28": "盧舍本身全體現。",
    "T47n1997_002:0722a09_29": "當機直下沒纖毫。",
    "T47n1997_002:0722a10_0": "到洛浦上堂云。",
    "T47n1997_002:0722a10_1": "萬木縈紆一逕遙。",
    "T47n1997_002:0722a10_2": "耽耽古屋枕山腰。",
    "T47n1997_002:0722a11_3": "今朝喜到深深處。",
    "T47n1997_002:0722a11_4": "幾度飛書辱見招。",
    "T47n1997_002:0722a12_0": "爍爍山桃似火。",
    "T47n1997_002:0722a12_1": "絲絲溪柳拕金。",
    "T47n1997_002:0722a12_2": "日暖風和鸎吟燕語。",
    "T47n1997_002:0722a13_3": "所以不離普光殿。",
    "T47n1997_002:0722a13_4": "不出菩提場。",
    "T47n1997_002:0722a13_5": "遍遊華藏海無邊剎境。",
    "T47n1997_002:0722a14_6": "左穿右穴重重無盡一一交羅。",
    "T47n1997_002:0722a15_7": "且作麼生是洛浦深深處。",
    "T47n1997_002:0722a15_8": "覿面若無宗正眼。",
    "T47n1997_002:0722a16_9": "回頭只見翠山巖。",
    "T47n1997_002:0722a17_0": "留首座上堂。",
    "T47n1997_002:0722a17_1": "古路坦然真規不墜。",
    "T47n1997_002:0722a17_2": "紀綱得所表帥得人。",
    "T47n1997_002:0722a18_3": "內肅外寧安家樂業。",
    "T47n1997_002:0722a18_4": "以大千界為一真境。",
    "T47n1997_002:0722a19_5": "以十方佛同一舍那。",
    "T47n1997_002:0722a19_6": "文殊普賢交光相羅。",
    "T47n1997_002:0722a20_7": "觀音彌勒擎拳合掌。",
    "T47n1997_002:0722a20_8": "臨濟德山互相贊成。",
    "T47n1997_002:0722a21_9": "白牯狸奴了無向背。",
    "T47n1997_002:0722a21_10": "可以演無生曲唱太平歌。",
    "T47n1997_002:0722a22_11": "且超情離見一句作麼生道。",
    "T47n1997_002:0722a22_12": "木人把板雲中拍。",
    "T47n1997_002:0722a23_13": "石女含笙井底吹。",
    "T47n1997_002:0722a24_0": "上堂云。",
    "T47n1997_002:0722a24_1": "三春已過九夏方新。",
    "T47n1997_002:0722a24_2": "聚玄徒雲間。",
    "T47n1997_002:0722a24_3": "扇真風世外。",
    "T47n1997_002:0722a25_4": "不促一念不涉三祇。",
    "T47n1997_002:0722a25_5": "當人隨處見成。",
    "T47n1997_002:0722a26_6": "箇箇頂門有眼。",
    "T47n1997_002:0722a26_7": "若便恁麼承當得去。",
    "T47n1997_002:0722a26_8": "放行把住全不由他。",
    "T47n1997_002:0722a27_9": "出沒縱橫更非外物。",
    "T47n1997_002:0722a27_10": "若使上流觀見正在半途。",
    "T47n1997_002:0722a28_11": "明眼相逢難為透脫。",
    "T47n1997_002:0722a28_12": "山僧雖無金剛寶劍衲僧向上鉗鎚。",
    "T47n1997_002:0722a29_13": "昔在五祖白雲拾得數箇金剛圈一籃栗棘蓬。",
    "T47n1997_002:0722b01_14": "九夏之中與諸人共相切磋。",
    "T47n1997_002:0722b02_15": "遂舉拂子云。",
    "T47n1997_002:0722b02_16": "大眾還見麼。",
    "T47n1997_002:0722b03_0": "且道。",
    "T47n1997_002:0722b03_1": "這箇是金剛圈。",
    "T47n1997_002:0722b03_2": "是栗棘蓬。",
    "T47n1997_002:0722b03_3": "不容淺見衲僧會。",
    "T47n1997_002:0722b04_4": "唯許通方作者知。",
    "T47n1997_002:0722b05_0": "上堂云。",
    "T47n1997_002:0722b05_1": "丁一卓二本分鉗鎚。",
    "T47n1997_002:0722b05_2": "揑聚放開作家受用。",
    "T47n1997_002:0722b06_3": "灰頭土面處壁立千仞。",
    "T47n1997_002:0722b06_4": "壁立千仞處土面灰頭。",
    "T47n1997_002:0722b07_5": "自然雙放雙收。",
    "T47n1997_002:0722b07_6": "到處為祥為瑞。",
    "T47n1997_002:0722b07_7": "還委悉麼。",
    "T47n1997_002:0722b08_8": "掬水月在手。",
    "T47n1997_002:0722b08_9": "弄華香滿衣。",
    "T47n1997_002:0722b09_0": "上堂云。",
    "T47n1997_002:0722b09_1": "太虛寥廓萬彙森然。",
    "T47n1997_002:0722b09_2": "正眼洞明纖毫不立。",
    "T47n1997_002:0722b10_3": "孤峻處祖師莫近。",
    "T47n1997_002:0722b10_4": "坦夷處人天共知。",
    "T47n1997_002:0722b10_5": "擊開大解脫門。",
    "T47n1997_002:0722b11_6": "識取無面目底。",
    "T47n1997_002:0722b11_7": "且作麼生是無面目底。",
    "T47n1997_002:0722b12_8": "芍藥華開菩薩臉。",
    "T47n1997_002:0722b12_9": "椶櫚葉現夜叉頭。",
    "T47n1997_002:0722b14_0": "解夏上堂云。",
    "T47n1997_002:0722b14_1": "圓覺伽藍豁開戶牖。",
    "T47n1997_002:0722b14_2": "華嚴剎海大座當軒。",
    "T47n1997_002:0722b15_3": "促百千億劫為一念。",
    "T47n1997_002:0722b15_4": "豈止百二十日長期。",
    "T47n1997_002:0722b16_5": "延一念作百千億劫。",
    "T47n1997_002:0722b16_6": "寧論此世來生。",
    "T47n1997_002:0722b17_0": "始見流金爍石。",
    "T47n1997_002:0722b17_1": "俄然玉露垂珠。",
    "T47n1997_002:0722b17_2": "時節不相饒。",
    "T47n1997_002:0722b18_0": "物理有變復。",
    "T47n1997_002:0722b18_1": "當時結夏。",
    "T47n1997_002:0722b18_2": "普天匝地一時結。",
    "T47n1997_002:0722b18_3": "此時解制。",
    "T47n1997_002:0722b19_4": "普天匝地一時解。",
    "T47n1997_002:0722b19_5": "結時初不相著。",
    "T47n1997_002:0722b19_6": "解時初不相離。",
    "T47n1997_002:0722b20_7": "到這裏通一線曉一機去。",
    "T47n1997_002:0722b20_8": "爾為爾我為我。",
    "T47n1997_002:0722b21_9": "長底長矩底短。",
    "T47n1997_002:0722b21_10": "清者自清濁者自濁。",
    "T47n1997_002:0722b22_11": "於中也無去來亦無動轉。",
    "T47n1997_002:0722b22_12": "浩然太均同歸一致。",
    "T47n1997_002:0722b23_13": "然後放收擒縱得大解脫。",
    "T47n1997_002:0722b23_14": "更喚什麼作爾作我作長作短。",
    "T47n1997_002:0722b24_15": "一時截斷。",
    "T47n1997_002:0722b24_16": "且自恣一句作麼生道。",
    "T47n1997_002:0722b25_17": "雲在嶺頭閑不徹。",
    "T47n1997_002:0722b25_18": "水流澗下太忙生。",
    "T47n1997_002:0722b27_0": "謝維那直歲上堂云。",
    "T47n1997_002:0722b27_1": "烹金琢玉。",
    "T47n1997_002:0722b27_2": "須資作者鉗槌。",
    "T47n1997_002:0722b28_3": "荷教扶宗。",
    "T47n1997_002:0722b28_4": "必仗本分兄弟。",
    "T47n1997_002:0722b28_5": "交為肘臂互作主賓。",
    "T47n1997_002:0722b29_6": "便可以顯大機發大用。",
    "T47n1997_002:0722b29_7": "布慈雲灑甘露。",
    "T47n1997_002:0722c01_0": "駕慈航觀斷岸。",
    "T47n1997_002:0722c01_1": "超生死越涅槃。",
    "T47n1997_002:0722c01_2": "令他天下衲僧頂門上放光。",
    "T47n1997_002:0722c02_3": "脚跟下歷落。",
    "T47n1997_002:0722c02_4": "箇箇如龍如虎。",
    "T47n1997_002:0722c03_0": "人人玉轉珠回。",
    "T47n1997_002:0722c03_1": "非唯扶竪叢林。",
    "T47n1997_002:0722c03_2": "亦乃流通正眼。",
    "T47n1997_002:0722c04_3": "豈不是奇特事。",
    "T47n1997_002:0722c04_4": "敢問大眾。",
    "T47n1997_002:0722c04_5": "奇特一句作麼生道。",
    "T47n1997_002:0722c05_6": "妙舞更須誇遍拍。",
    "T47n1997_002:0722c05_7": "三臺須是大家催。",
    "T47n1997_002:0722c06_0": "開爐上堂。",
    "T47n1997_002:0722c06_1": "僧問。",
    "T47n1997_002:0722c06_2": "古者道。",
    "T47n1997_002:0722c06_3": "敲空作響。",
    "T47n1997_002:0722c06_4": "擊木無聲。",
    "T47n1997_002:0722c07_5": "如何是敲空作響。",
    "T47n1997_002:0722c07_6": "師云。",
    "T47n1997_002:0722c07_7": "釋迦老子來也。",
    "T47n1997_002:0722c07_8": "師乃云。",
    "T47n1997_002:0722c08_9": "三世諸佛向火焰裏轉大法輪。",
    "T47n1997_002:0722c08_10": "熱發作什麼火焰。",
    "T47n1997_002:0722c09_11": "為三世諸佛說法。",
    "T47n1997_002:0722c09_12": "三世諸佛立地聽。",
    "T47n1997_002:0722c10_13": "也須照顧眉毛。",
    "T47n1997_002:0722c10_14": "若是聊聞徹骨徹髓。",
    "T47n1997_002:0722c10_15": "信得及見得徹。",
    "T47n1997_002:0722c11_16": "直下與三世諸佛同生同死。",
    "T47n1997_002:0722c11_17": "與火焰同起同滅。",
    "T47n1997_002:0722c12_18": "當處解脫得大安隱。",
    "T47n1997_002:0722c12_19": "衲被蒙頭便是箇清涼世界。",
    "T47n1997_002:0722c13_20": "苟或未然。",
    "T47n1997_002:0722c13_21": "只知事逐眼前過。",
    "T47n1997_002:0722c14_22": "不覺老從頭上來。",
    "T47n1997_002:0722c15_0": "上堂云。",
    "T47n1997_002:0722c15_1": "一向不恁麼。",
    "T47n1997_002:0722c15_2": "目視雲漢不狥人情。",
    "T47n1997_002:0722c15_3": "一向恁麼。",
    "T47n1997_002:0722c16_4": "灰頭土面帶水拕泥。",
    "T47n1997_002:0722c16_5": "恁麼中不恁麼。",
    "T47n1997_002:0722c17_0": "就下平高。",
    "T47n1997_002:0722c17_1": "不恁麼中却恁麼。",
    "T47n1997_002:0722c17_2": "從空放下。",
    "T47n1997_002:0722c17_3": "或有箇恁麼不恁麼總不管。",
    "T47n1997_002:0722c18_4": "亦無明亦無暗。",
    "T47n1997_002:0722c18_5": "亦不放亦不收。",
    "T47n1997_002:0722c19_6": "且道如何。",
    "T47n1997_002:0722c19_7": "到頭霜夜月。",
    "T47n1997_002:0722c19_8": "任運落前溪。",
    "T47n1997_002:0722c21_0": "上堂云。",
    "T47n1997_002:0722c21_1": "天寒人寒。",
    "T47n1997_002:0722c21_2": "大家在箇裏。",
    "T47n1997_002:0722c21_3": "滴水滴凍。",
    "T47n1997_002:0722c21_4": "無這閑工夫。",
    "T47n1997_002:0722c22_5": "庭際之人。",
    "T47n1997_002:0722c22_6": "驀地覓心不得。",
    "T47n1997_002:0722c22_7": "衲衣下事。",
    "T47n1997_002:0722c23_8": "誰諳野火燒山。",
    "T47n1997_002:0722c23_9": "千重百匝沒遮欄。",
    "T47n1997_002:0722c23_10": "漢去胡來絕回換。",
    "T47n1997_002:0722c24_11": "且作麼生是不離當處底一句。",
    "T47n1997_002:0722c24_12": "鶴飛千尺雪。",
    "T47n1997_002:0722c25_13": "龍起一潭氷。",
    "T47n1997_002:0722c26_0": "上堂云。",
    "T47n1997_002:0722c26_1": "雪竇道。",
    "T47n1997_002:0722c26_2": "義出豐年。",
    "T47n1997_002:0722c26_3": "儉生不孝。",
    "T47n1997_002:0722c26_4": "於衲僧門下是放行是把住。",
    "T47n1997_002:0722c27_5": "若人道得。",
    "T47n1997_002:0722c27_6": "老僧分半院與伊住。",
    "T47n1997_002:0722c28_7": "師云雪竇病多諳藥性。",
    "T47n1997_002:0722c28_8": "經効始傳人。",
    "T47n1997_002:0722c29_0": "箇中或有知豐知儉知放行知把住底。",
    "T47n1997_002:0722c29_1": "亦何必分半院與伊住。",
    "T47n1997_002:0723a01_2": "燒香發願。",
    "T47n1997_002:0723a01_3": "只圖他早有箇院子住。",
    "T47n1997_002:0723a02_4": "使嘗些滋味。",
    "T47n1997_002:0723a02_5": "且免得窮廝煎餓廝炒。",
    "T47n1997_002:0723a04_0": "上堂云。",
    "T47n1997_002:0723a04_1": "滿天和氣匝地韶光。",
    "T47n1997_002:0723a04_2": "柳眼迸開桑條憋破。",
    "T47n1997_002:0723a05_3": "華枝似錦鳥語如簧。",
    "T47n1997_002:0723a05_4": "八穴七穿。",
    "T47n1997_002:0723a05_5": "篆不雕之心印。",
    "T47n1997_002:0723a06_6": "百頭千緒。",
    "T47n1997_002:0723a06_7": "演不說之妙門。",
    "T47n1997_002:0723a06_8": "物物上明頭頭上現。",
    "T47n1997_002:0723a07_9": "當處截得斷去。",
    "T47n1997_002:0723a07_10": "死火不重燃。",
    "T47n1997_002:0723a07_11": "直下信得及去。",
    "T47n1997_002:0723a08_12": "枯荄生物外。",
    "T47n1997_002:0723a08_13": "不涉程途則且置。",
    "T47n1997_002:0723a08_14": "和泥合水一句作麼生道。",
    "T47n1997_002:0723a09_15": "還家盡是兒孫事。",
    "T47n1997_002:0723a09_16": "祖父從來不出門。",
    "T47n1997_002:0723a11_0": "上堂云。",
    "T47n1997_002:0723a11_1": "韶華二月半。",
    "T47n1997_002:0723a11_2": "漏逗渾莫算。",
    "T47n1997_002:0723a11_3": "米少食無鹽。",
    "T47n1997_002:0723a12_4": "釘菜崖空飯。",
    "T47n1997_002:0723a12_5": "吞底栗棘蓬。",
    "T47n1997_002:0723a12_6": "跳底金剛圈。",
    "T47n1997_002:0723a12_7": "分外展家風。",
    "T47n1997_002:0723a13_8": "秦時[車*度]轢鑽。",
    "T47n1997_002:0723a13_9": "◎圓悟佛果禪師語錄卷第二"
}