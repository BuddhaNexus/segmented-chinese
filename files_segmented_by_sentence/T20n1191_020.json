[
    {
        "source_sentence": "大方廣菩薩藏文殊師利根本儀",
        "from": "T20n1191_020:0902a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軌經卷第二十",
        "from": "T20n1191_020:0902a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試鴻臚少卿",
        "from": "T20n1191_020:0902a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣天息災奉　詔譯27 生無量功德果報品生無量功德果報品第二十七爾時世尊釋迦牟尼佛。",
        "from": "T20n1191_020:0902a26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀察淨光天。",
        "from": "T20n1191_020:0902a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告妙吉祥童子言。",
        "from": "T20n1191_020:0902a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥所有一切真言。",
        "from": "T20n1191_020:0902a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣大儀軌一切祕密明。",
        "from": "T20n1191_020:0902a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有修行者。",
        "from": "T20n1191_020:0902a28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生無量功德獲一切果報。",
        "from": "T20n1191_020:0902a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為修行者稱量成就速疾之義。",
        "from": "T20n1191_020:0902b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有多生於此儀軌曾修行者。",
        "from": "T20n1191_020:0902b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法易成就而此成就為最為上。",
        "from": "T20n1191_020:0902b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子若有眾生。",
        "from": "T20n1191_020:0902b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能依次第修習祕密明法者。",
        "from": "T20n1191_020:0902b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是最上修行是大智者。",
        "from": "T20n1191_020:0902b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不依法無以得成。",
        "from": "T20n1191_020:0902b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依法修行相應和合。",
        "from": "T20n1191_020:0902b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得最上句。",
        "from": "T20n1191_020:0902b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依法修行誦真言者。",
        "from": "T20n1191_020:0902b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得令口有聲。",
        "from": "T20n1191_020:0902b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若口有聲誦為非誦。",
        "from": "T20n1191_020:0902b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須默然持誦當得成就。",
        "from": "T20n1191_020:0902b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼持誦行人求法成就者。",
        "from": "T20n1191_020:0902b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須食三白食及諸菓藥。",
        "from": "T20n1191_020:0902b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是食者決定得最上法成就。",
        "from": "T20n1191_020:0902b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又若一心觀想決定。",
        "from": "T20n1191_020:0902b09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當得安靜無惱。",
        "from": "T20n1191_020:0902b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若食不依法及不專注。",
        "from": "T20n1191_020:0902b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求真言不得成就。",
        "from": "T20n1191_020:0902b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於梵王及彼帝釋所有真言。",
        "from": "T20n1191_020:0902b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能成就。",
        "from": "T20n1191_020:0902b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況諸佛菩薩所有真言。",
        "from": "T20n1191_020:0902b12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及彼慳貪我慢及性懈怠。",
        "from": "T20n1191_020:0902b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒樂世法不能離慾。",
        "from": "T20n1191_020:0902b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此之人無成就分至於天人阿修羅等真言之法。",
        "from": "T20n1191_020:0902b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不依儀則及不專注。",
        "from": "T20n1191_020:0902b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不得作降伏等法。",
        "from": "T20n1191_020:0902b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作者返得迷惑及與愚癡。",
        "from": "T20n1191_020:0902b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作法人有如是相者。",
        "from": "T20n1191_020:0902b16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "將來當感惡趣之果。",
        "from": "T20n1191_020:0902b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或見有如是等者。",
        "from": "T20n1191_020:0902b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以佛部真言作降伏法。",
        "from": "T20n1191_020:0902b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而與救護得解脫已。",
        "from": "T20n1191_020:0902b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人復以專注次第。",
        "from": "T20n1191_020:0902b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "再持誦者亦得成就。",
        "from": "T20n1191_020:0902b19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以彼真言威德力故。",
        "from": "T20n1191_020:0902b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及得大善寂靜。",
        "from": "T20n1191_020:0902b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復得不空成就。",
        "from": "T20n1191_020:0902b20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與作降伏救護者。",
        "from": "T20n1191_020:0902b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我說此人是眾生善友。",
        "from": "T20n1191_020:0902b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速能成就三乘平等寂靜之道。",
        "from": "T20n1191_020:0902b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有專注身心依法念誦難成就者。",
        "from": "T20n1191_020:0902b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人宿有輪迴之業。",
        "from": "T20n1191_020:0902b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更須重重懺悔。",
        "from": "T20n1191_020:0902b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求罪消滅必得解脫。",
        "from": "T20n1191_020:0902b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過是已後於真言中當得成就。",
        "from": "T20n1191_020:0902b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得見果報所作不虛。",
        "from": "T20n1191_020:0902b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有因即有果。",
        "from": "T20n1191_020:0902b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若無因者定是無果。",
        "from": "T20n1191_020:0902b26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果和合有生有滅。",
        "from": "T20n1191_020:0902b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因儀則法生寂靜界。",
        "from": "T20n1191_020:0902b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以彼專心親近善友。",
        "from": "T20n1191_020:0902b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行於佛法作大佛事生大善性。",
        "from": "T20n1191_020:0902b28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼持誦行人。",
        "from": "T20n1191_020:0902b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於末法之世人心顛倒之時。",
        "from": "T20n1191_020:0902b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此法中得成就者。",
        "from": "T20n1191_020:0902c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於當來世亦得成就。",
        "from": "T20n1191_020:0902c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至究竟大善寂靜。",
        "from": "T20n1191_020:0902c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於世間宣說無造無作寂靜之句。",
        "from": "T20n1191_020:0902c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來清淨之義。",
        "from": "T20n1191_020:0902c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛不可言說。",
        "from": "T20n1191_020:0902c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而於其中說於祕密成就之句。",
        "from": "T20n1191_020:0902c04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼祕密句。",
        "from": "T20n1191_020:0902c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是佛如來無性自性之所生出。",
        "from": "T20n1191_020:0902c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以大法力為於世間。",
        "from": "T20n1191_020:0902c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令眾生決定成就。",
        "from": "T20n1191_020:0902c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復眾生於末法時。",
        "from": "T20n1191_020:0902c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修真言行求佛菩提。",
        "from": "T20n1191_020:0902c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真如空相不能成就者。",
        "from": "T20n1191_020:0902c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當宜疾速。",
        "from": "T20n1191_020:0902c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於時時中不得間斷。",
        "from": "T20n1191_020:0902c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依於儀則作法修行。",
        "from": "T20n1191_020:0902c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承真言功決定成就。",
        "from": "T20n1191_020:0902c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此教法中有諸行人。",
        "from": "T20n1191_020:0902c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛在時修真言行。",
        "from": "T20n1191_020:0902c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速得最上成就。",
        "from": "T20n1191_020:0902c11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛滅後像法之時。",
        "from": "T20n1191_020:0902c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修真言行得中品成就。",
        "from": "T20n1191_020:0902c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於末法時得下品成就。",
        "from": "T20n1191_020:0902c12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸時中善能修習真言法行。",
        "from": "T20n1191_020:0902c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必定獲得三種大果。",
        "from": "T20n1191_020:0902c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若佛在時於如來族。",
        "from": "T20n1191_020:0902c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒得成就。",
        "from": "T20n1191_020:0902c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛滅後唯蓮華族而得成就。",
        "from": "T20n1191_020:0902c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於末法時唯金剛族最得成就。",
        "from": "T20n1191_020:0902c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼觀自在菩薩妙吉祥菩薩。",
        "from": "T20n1191_020:0902c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多羅菩薩部里俱胝菩薩。",
        "from": "T20n1191_020:0902c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手菩薩。",
        "from": "T20n1191_020:0902c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等菩薩以願力故。",
        "from": "T20n1191_020:0902c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生於真言中得決定成就。",
        "from": "T20n1191_020:0902c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一切時有諸行人。",
        "from": "T20n1191_020:0902c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言中深心愛樂決定修習。",
        "from": "T20n1191_020:0902c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為求諸聖賢。",
        "from": "T20n1191_020:0902c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及降伏一切夜叉羅剎。",
        "from": "T20n1191_020:0902c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用上品心決定成就。",
        "from": "T20n1191_020:0902c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行人於末法時。",
        "from": "T20n1191_020:0902c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依幖幟說。",
        "from": "T20n1191_020:0902c21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間所有諸仙人。",
        "from": "T20n1191_020:0902c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿修羅夜叉羅剎迦樓羅毘舍左。",
        "from": "T20n1191_020:0902c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至部多眾及彼宿曜。",
        "from": "T20n1191_020:0902c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人非人類住欲界者。",
        "from": "T20n1191_020:0902c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於人世間作不饒益者。",
        "from": "T20n1191_020:0902c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作調伏。",
        "from": "T20n1191_020:0902c24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定成就所有大福德者。",
        "from": "T20n1191_020:0902c25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵王帝釋及嚕捺囉。",
        "from": "T20n1191_020:0902c25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至伊舍那天那羅延天。",
        "from": "T20n1191_020:0902c26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是大福大力天等。",
        "from": "T20n1191_020:0902c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸行人一切所作皆悉隨願。",
        "from": "T20n1191_020:0902c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於一切極惡部多。",
        "from": "T20n1191_020:0902c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸人中作惱亂者。",
        "from": "T20n1191_020:0902c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以真言力而調伏之皆得隨願。",
        "from": "T20n1191_020:0902c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於末法之時大怖之中。",
        "from": "T20n1191_020:0902c29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸真言無上品心。",
        "from": "T20n1191_020:0903a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能於法精勤修習。",
        "from": "T20n1191_020:0903a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得果報者。",
        "from": "T20n1191_020:0903a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於他世中亦不成就。",
        "from": "T20n1191_020:0903a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥我今與汝受記。",
        "from": "T20n1191_020:0903a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於末法大怖之世。",
        "from": "T20n1191_020:0903a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可於是時救度。",
        "from": "T20n1191_020:0903a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化導善根眾生。",
        "from": "T20n1191_020:0903a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法僧歸信供養之者。",
        "from": "T20n1191_020:0903a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於彼修真言行人而作擁護。",
        "from": "T20n1191_020:0903a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "28 說印儀則品大方廣菩薩藏文殊師利根本儀軌經說印儀則品第二十八爾時世尊釋迦牟尼佛。",
        "from": "T20n1191_020:0903a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀察淨光天眾。",
        "from": "T20n1191_020:0903a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告妙吉祥童子言。",
        "from": "T20n1191_020:0903a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥諦聽。",
        "from": "T20n1191_020:0903a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝最上祕密真言及彼印法。",
        "from": "T20n1191_020:0903a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得為無信眾生。",
        "from": "T20n1191_020:0903a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及於佛教無信重者宣說。",
        "from": "T20n1191_020:0903a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至不入曼拏羅三昧者。",
        "from": "T20n1191_020:0903a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷三寶族者。",
        "from": "T20n1191_020:0903a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不親近善友者。",
        "from": "T20n1191_020:0903a12_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無福無德者。",
        "from": "T20n1191_020:0903a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近惡人者。",
        "from": "T20n1191_020:0903a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "親近罪友者。",
        "from": "T20n1191_020:0903a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離佛法者。",
        "from": "T20n1191_020:0903a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切虛妄者。",
        "from": "T20n1191_020:0903a13_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此儀軌不依阿闍梨教者。",
        "from": "T20n1191_020:0903a14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不受灌頂者。",
        "from": "T20n1191_020:0903a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於汝童子最上祕密曼拏羅三昧不見者。",
        "from": "T20n1191_020:0903a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不依如來族者。",
        "from": "T20n1191_020:0903a16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是人等皆不得為說。",
        "from": "T20n1191_020:0903a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故如是之人所持真言一切部多。",
        "from": "T20n1191_020:0903a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而不信受。",
        "from": "T20n1191_020:0903a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及不依行故。",
        "from": "T20n1191_020:0903a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為以心不信佛法。",
        "from": "T20n1191_020:0903a18_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離菩提道故。",
        "from": "T20n1191_020:0903a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有印法儀軌不得傳付如是等人。",
        "from": "T20n1191_020:0903a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復不得於是人等而顯現故。",
        "from": "T20n1191_020:0903a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有大愚迷者。",
        "from": "T20n1191_020:0903a20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深貪愛者亦不得傳付。",
        "from": "T20n1191_020:0903a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若妄傳付者。",
        "from": "T20n1191_020:0903a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人於法不得成就。",
        "from": "T20n1191_020:0903a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼持誦人是心顛倒。",
        "from": "T20n1191_020:0903a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人若得或。",
        "from": "T20n1191_020:0903a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒有為作。",
        "from": "T20n1191_020:0903a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃於自身速得破壞。",
        "from": "T20n1191_020:0903a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若是心信善者。",
        "from": "T20n1191_020:0903a23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三昧真如而獲得者。",
        "from": "T20n1191_020:0903a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸重三寶常供養者。",
        "from": "T20n1191_020:0903a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛法中行儀軌者。",
        "from": "T20n1191_020:0903a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有發菩提心。",
        "from": "T20n1191_020:0903a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知莊嚴菩提心。",
        "from": "T20n1191_020:0903a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒行菩提道。",
        "from": "T20n1191_020:0903a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是人等可與宣說印法儀則。",
        "from": "T20n1191_020:0903a27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有行於真言儀軌法。",
        "from": "T20n1191_020:0903a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求三昧次第者。",
        "from": "T20n1191_020:0903a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲求成大菩提道。",
        "from": "T20n1191_020:0903a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復發菩薩辟支佛聲聞等心求正法者。",
        "from": "T20n1191_020:0903a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得為宣說祕密印法。",
        "from": "T20n1191_020:0903a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以信心離大慳妬。",
        "from": "T20n1191_020:0903b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依於佛法行無礙行者。",
        "from": "T20n1191_020:0903b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當與宣說祕密印法。",
        "from": "T20n1191_020:0903b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥我說真言印法定量。",
        "from": "T20n1191_020:0903b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正滿八百不增不減。",
        "from": "T20n1191_020:0903b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至過去諸佛亦同此量。",
        "from": "T20n1191_020:0903b03_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝妙吉祥大儀軌法平等無別。",
        "from": "T20n1191_020:0903b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有一切佛真言藏所說亦爾。",
        "from": "T20n1191_020:0903b05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥凡有所作利益成就。",
        "from": "T20n1191_020:0903b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當須真言及印一一和合。",
        "from": "T20n1191_020:0903b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如車二輪不得闕一。",
        "from": "T20n1191_020:0903b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若闕一者無能運轉。",
        "from": "T20n1191_020:0903b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切真言無印所作亦復如是。",
        "from": "T20n1191_020:0903b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若真言及印相應和合。",
        "from": "T20n1191_020:0903b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "事速成就轉彼三界。",
        "from": "T20n1191_020:0903b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天人阿修羅等不為難事。",
        "from": "T20n1191_020:0903b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況求作人間之事。",
        "from": "T20n1191_020:0903b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依法修行決定得果。",
        "from": "T20n1191_020:0903b10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印有真言二種相應。",
        "from": "T20n1191_020:0903b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求清淨儀則制伏部多。",
        "from": "T20n1191_020:0903b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依第一佛子真言及印修行者。",
        "from": "T20n1191_020:0903b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三種事如在掌中誦者。",
        "from": "T20n1191_020:0903b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大地富貴一切隨意。",
        "from": "T20n1191_020:0903b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有真言定印及印定真言真言不得闕印。",
        "from": "T20n1191_020:0903b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印亦不得闕於真言。",
        "from": "T20n1191_020:0903b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印及真言須具和合。",
        "from": "T20n1191_020:0903b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所作事必獲果證。",
        "from": "T20n1191_020:0903b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼真言印互相依倚。",
        "from": "T20n1191_020:0903b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如因成果如果酬因。",
        "from": "T20n1191_020:0903b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持誦行人若依法用作無法不成。",
        "from": "T20n1191_020:0903b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依儀則。",
        "from": "T20n1191_020:0903b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以一切定印所印真言。",
        "from": "T20n1191_020:0903b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作請召事無有不成。",
        "from": "T20n1191_020:0903b19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至最上世界。",
        "from": "T20n1191_020:0903b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及輪迴中所有眾生。",
        "from": "T20n1191_020:0903b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用請召者亦無不成。",
        "from": "T20n1191_020:0903b20_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若或於此請召之事有不成者。",
        "from": "T20n1191_020:0903b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當依儀則請大力諸菩薩乃至十地菩薩為作擁護。",
        "from": "T20n1191_020:0903b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使一切部多等作障難者。",
        "from": "T20n1191_020:0903b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能得見不能得近。",
        "from": "T20n1191_020:0903b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令行人得法成就。",
        "from": "T20n1191_020:0903b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若具此一切佛真言法印。",
        "from": "T20n1191_020:0903b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於行住中得為擁護。",
        "from": "T20n1191_020:0903b24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又一切真言中有印。",
        "from": "T20n1191_020:0903b25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切印中亦有真言。",
        "from": "T20n1191_020:0903b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印與真言互相生出。",
        "from": "T20n1191_020:0903b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若修行者依法念誦及作護摩。",
        "from": "T20n1191_020:0903b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聖道此中生出。",
        "from": "T20n1191_020:0903b27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若彼行人精勤修習。",
        "from": "T20n1191_020:0903b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不懈不怠復不退屈。",
        "from": "T20n1191_020:0903b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得一切真言不空。",
        "from": "T20n1191_020:0903b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就佛之所言言不虛妄。",
        "from": "T20n1191_020:0903b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依儀軌恒修行者。",
        "from": "T20n1191_020:0903b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大利益。",
        "from": "T20n1191_020:0903c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥童子。",
        "from": "T20n1191_020:0903c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此儀軌王真言印法。",
        "from": "T20n1191_020:0903c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我皆重重宣說。",
        "from": "T20n1191_020:0903c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有廣大利益果報亦重重宣說。",
        "from": "T20n1191_020:0903c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是宣說此最上祕密廣大真言印決定法。",
        "from": "T20n1191_020:0903c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時彼妙吉祥。",
        "from": "T20n1191_020:0903c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以童子相現熙怡顏。",
        "from": "T20n1191_020:0903c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問於世尊最上牟尼。",
        "from": "T20n1191_020:0903c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何因菩薩變化所生。",
        "from": "T20n1191_020:0903c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得大精進十地之位。",
        "from": "T20n1191_020:0903c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又此廣大真言義法。",
        "from": "T20n1191_020:0903c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸佛之所宣說。",
        "from": "T20n1191_020:0903c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今釋師子為何亦說。",
        "from": "T20n1191_020:0903c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今有疑唯願開示。",
        "from": "T20n1191_020:0903c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來最上牟尼。",
        "from": "T20n1191_020:0903c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以迦陵頻伽微妙梵音。",
        "from": "T20n1191_020:0903c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說於菩薩得十地位。",
        "from": "T20n1191_020:0903c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又說真言利益等事。",
        "from": "T20n1191_020:0903c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥我於過去多劫之前。",
        "from": "T20n1191_020:0903c11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為菩薩時。",
        "from": "T20n1191_020:0903c11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有佛號開花王如來。",
        "from": "T20n1191_020:0903c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於彼佛得此祕密大儀軌王。",
        "from": "T20n1191_020:0903c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為眾生作其利益。",
        "from": "T20n1191_020:0903c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以悲愍心發其大願。",
        "from": "T20n1191_020:0903c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願於最上如來佛法中生。",
        "from": "T20n1191_020:0903c14_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於末法時。",
        "from": "T20n1191_020:0903c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此教法轉彼法輪。",
        "from": "T20n1191_020:0903c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以如是經無量時。",
        "from": "T20n1191_020:0903c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於眾生得十地位。",
        "from": "T20n1191_020:0903c16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於次後時。",
        "from": "T20n1191_020:0903c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此儀軌王我傳於汝。",
        "from": "T20n1191_020:0903c16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我入滅後世間空虛。",
        "from": "T20n1191_020:0903c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南閻浮提遠離如是佛法之藏。",
        "from": "T20n1191_020:0903c18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝於是時末法之中。",
        "from": "T20n1191_020:0903c18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教彼眾生作此儀軌。",
        "from": "T20n1191_020:0903c18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝以此廣大儀軌王。",
        "from": "T20n1191_020:0903c19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於眾生發起大行。",
        "from": "T20n1191_020:0903c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於末法大怖之時。",
        "from": "T20n1191_020:0903c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有眾生無正道心。",
        "from": "T20n1191_020:0903c20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及有人王不行正法。",
        "from": "T20n1191_020:0903c21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒以惡心惱害眾生。",
        "from": "T20n1191_020:0903c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又有一切惡人非人。",
        "from": "T20n1191_020:0903c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此大教欲作破壞妄加毀謗。",
        "from": "T20n1191_020:0903c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當為此等不饒益者。",
        "from": "T20n1191_020:0903c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此一切調伏法藏祕密真言。",
        "from": "T20n1191_020:0903c24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子汝此過去為利益故。",
        "from": "T20n1191_020:0903c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發菩薩行求於儀軌。",
        "from": "T20n1191_020:0903c25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於彼佛涅盤後。",
        "from": "T20n1191_020:0903c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以佛遺教而作佛事。",
        "from": "T20n1191_020:0903c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於世世中作童子形。",
        "from": "T20n1191_020:0903c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨我行處以真言相教化眾生。",
        "from": "T20n1191_020:0903c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子此是汝之過去所作願力。",
        "from": "T20n1191_020:0903c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今復為童子。",
        "from": "T20n1191_020:0903c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得我為說。",
        "from": "T20n1191_020:0903c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子汝復又於別佛剎土無佛世時。",
        "from": "T20n1191_020:0903c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於眾生以真言相。",
        "from": "T20n1191_020:0903c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於一切愚癡之者。",
        "from": "T20n1191_020:0904a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教導開化使知佛法求解脫道。",
        "from": "T20n1191_020:0904a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當復施與一切富貴。",
        "from": "T20n1191_020:0904a02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童子我滅度後末法之時。",
        "from": "T20n1191_020:0904a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為於世間一切眾生。",
        "from": "T20n1191_020:0904a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現汝最上童子之形。",
        "from": "T20n1191_020:0904a04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於大野雪地及適悅地。",
        "from": "T20n1191_020:0904a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至跋提河岸我涅盤處。",
        "from": "T20n1191_020:0904a05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸處隨大願心而作佛事。",
        "from": "T20n1191_020:0904a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大方廣菩薩藏文殊師利根本儀軌經卷第二十言句覺壇祕密心印言摩尼威德明珠莊嚴照照吉祥吉祥邊照智切光王觸就薩人壽祖現間利尼寶積寶慈在自在淨自在天虛空切出退蓋稱積輪幡空索自在衣垢祥稱吉祥吼毫耳拳住益底哩針積幢切部多幢喜播哩濕嚩幟益海喜那曩魔世髻苦三毒色人耳處者住者瓶塵眉昧羅蜜經祥果樹木跏趺坐相冠障王行瓶明聚印聚印印塞優婆夷皮囉娑憾樹尼則品第十四幢盡意華印印",
        "from": "T20n1191_020:孔雀坐0896a06_100",
        "context_with_next_sentence": false
    }
]