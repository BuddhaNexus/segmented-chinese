[
    {
        "source_sentence": "聖觀自在菩薩心真言瑜伽觀行",
        "from": "T20n1031_001:0004c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "儀軌出大毘盧遮那成道經",
        "from": "T20n1031_001:0004c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T20n1031_001:0004c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空諡大鑒正號大廣智大興善寺三藏沙門不空奉　詔譯夫修瑜伽者。",
        "from": "T20n1031_001:0004c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於靜處建立曼荼羅。",
        "from": "T20n1031_001:0004c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以香水散灑。",
        "from": "T20n1031_001:0004c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種時華散於壇上。",
        "from": "T20n1031_001:0004c26_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者先須澡浴著新淨衣。",
        "from": "T20n1031_001:0004c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次入道場對尊像前。",
        "from": "T20n1031_001:0004c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五輪投地發殷重心。",
        "from": "T20n1031_001:0004c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮一切如來及諸菩薩。",
        "from": "T20n1031_001:0004c28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結跏趺坐。",
        "from": "T20n1031_001:0004c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想諸佛如在目前。",
        "from": "T20n1031_001:0004c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後至誠懺一切罪。",
        "from": "T20n1031_001:0005a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言。",
        "from": "T20n1031_001:0005a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我某甲自從無始已來。",
        "from": "T20n1031_001:0005a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪迴生死乃至今日。",
        "from": "T20n1031_001:0005a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所造眾罪無量無邊。",
        "from": "T20n1031_001:0005a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不自覺知自作教他見作隨喜。",
        "from": "T20n1031_001:0005a03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今懺悔不復更造。",
        "from": "T20n1031_001:0005a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛慈悲攝受。",
        "from": "T20n1031_001:0005a04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令我罪障速得消滅如是三說。",
        "from": "T20n1031_001:0005a04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應自誓受三歸依戒。",
        "from": "T20n1031_001:0005a05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是言。",
        "from": "T20n1031_001:0005a05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩哀愍護我。",
        "from": "T20n1031_001:0005a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我某甲始從今日。",
        "from": "T20n1031_001:0005a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至當坐菩提道場。",
        "from": "T20n1031_001:0005a07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依如來無上三身。",
        "from": "T20n1031_001:0005a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依方廣大乘法藏。",
        "from": "T20n1031_001:0005a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依僧伽諸菩薩眾如是三說。",
        "from": "T20n1031_001:0005a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我某甲歸依佛竟歸依法竟歸依僧竟。",
        "from": "T20n1031_001:0005a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今已往乃至成佛。",
        "from": "T20n1031_001:0005a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更不歸餘二乘外道。",
        "from": "T20n1031_001:0005a10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願諸佛慈悲攝受。",
        "from": "T20n1031_001:0005a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應捨身供養。",
        "from": "T20n1031_001:0005a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應作是言。",
        "from": "T20n1031_001:0005a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛菩薩願哀愍故。",
        "from": "T20n1031_001:0005a13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝受於我。",
        "from": "T20n1031_001:0005a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今已往乃至成佛。",
        "from": "T20n1031_001:0005a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我常捨身供養一切如來及諸菩薩。",
        "from": "T20n1031_001:0005a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願慈悲哀愍加護如是三說。",
        "from": "T20n1031_001:0005a15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於最下方空中。",
        "from": "T20n1031_001:0005a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀賀字黑色。",
        "from": "T20n1031_001:0005a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字變成風輪。",
        "from": "T20n1031_001:0005a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其形半月。",
        "from": "T20n1031_001:0005a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於風輪上。",
        "from": "T20n1031_001:0005a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀嚩字白色。",
        "from": "T20n1031_001:0005a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字變成水輪其形圓滿。",
        "from": "T20n1031_001:0005a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於水輪上。",
        "from": "T20n1031_001:0005a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應觀囉字金色。",
        "from": "T20n1031_001:0005a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字變成猛利金剛杵。",
        "from": "T20n1031_001:0005a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出金剛火焰其形三角。",
        "from": "T20n1031_001:0005a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從下向上至於地輪及以自身。",
        "from": "T20n1031_001:0005a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火焰焚燒唯有灰燼。",
        "from": "T20n1031_001:0005a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以此灰變成金剛輪。",
        "from": "T20n1031_001:0005a21_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其輪白色堅密。",
        "from": "T20n1031_001:0005a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨量大小其形正方。",
        "from": "T20n1031_001:0005a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次於金剛輪上。",
        "from": "T20n1031_001:0005a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想八葉大蓮華。",
        "from": "T20n1031_001:0005a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具寶鬚蘂。",
        "from": "T20n1031_001:0005a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蓮華臺上。",
        "from": "T20n1031_001:0005a23_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想娑上字黃金色。",
        "from": "T20n1031_001:0005a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字具無量光明。",
        "from": "T20n1031_001:0005a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變此娑字成聖觀自在菩薩。",
        "from": "T20n1031_001:0005a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結跏趺坐身如金色。",
        "from": "T20n1031_001:0005a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓光熾盛。",
        "from": "T20n1031_001:0005a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身披輕縠繒綵衣著赤色裙。",
        "from": "T20n1031_001:0005a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手當臍執未敷蓮華。",
        "from": "T20n1031_001:0005a27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手當胸作開華葉勢。",
        "from": "T20n1031_001:0005a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具頭冠瓔珞。",
        "from": "T20n1031_001:0005a28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "首戴無量壽佛住於定相。",
        "from": "T20n1031_001:0005a28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀已。",
        "from": "T20n1031_001:0005a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結三昧耶印。",
        "from": "T20n1031_001:0005a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手當心。",
        "from": "T20n1031_001:0005b01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密合掌並竪二大指。",
        "from": "T20n1031_001:0005b01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005b01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫三滿多母馱引南引阿上三去銘底哩二合三銘三去麼鼻曳引娑嚩二合引賀引誦真言三遍。",
        "from": "T20n1031_001:0005b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印印五處加持。",
        "from": "T20n1031_001:0005b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂額右肩左肩心喉頂上散之。",
        "from": "T20n1031_001:0005b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印。",
        "from": "T20n1031_001:0005b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能速滿十地行願十波羅蜜。",
        "from": "T20n1031_001:0005b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能見一切如來地。",
        "from": "T20n1031_001:0005b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能超過法道界。",
        "from": "T20n1031_001:0005b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂超過勝解地淨心地如來地名超過法道界。",
        "from": "T20n1031_001:0005b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結法界生印。",
        "from": "T20n1031_001:0005b09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手各作金剛拳側相著。",
        "from": "T20n1031_001:0005b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪二頭指頭側相拄。",
        "from": "T20n1031_001:0005b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於頂上。",
        "from": "T20n1031_001:0005b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於頂上想囕字。",
        "from": "T20n1031_001:0005b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從字流出白色光。",
        "from": "T20n1031_001:0005b12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照自身及以內外。",
        "from": "T20n1031_001:0005b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀自身等同法界。",
        "from": "T20n1031_001:0005b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那莫三去滿多母馱引南引達磨馱引都娑嚩二合婆引去嚩句引憾誦真言三遍。",
        "from": "T20n1031_001:0005b16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印從頂上便分。",
        "from": "T20n1031_001:0005b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二拳兩邊徐徐下散。",
        "from": "T20n1031_001:0005b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結轉法輪印。",
        "from": "T20n1031_001:0005b18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手當心。",
        "from": "T20n1031_001:0005b19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "背相附以右押左。",
        "from": "T20n1031_001:0005b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四指互相鉤。",
        "from": "T20n1031_001:0005b19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手大拇指。",
        "from": "T20n1031_001:0005b20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕於右手掌中。",
        "from": "T20n1031_001:0005b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右手大拇指頭相拄。",
        "from": "T20n1031_001:0005b21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自身如金剛薩埵菩薩。",
        "from": "T20n1031_001:0005b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執金剛鈴置於左𦜮上。",
        "from": "T20n1031_001:0005b22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持五股杵當心作跳躑勢。",
        "from": "T20n1031_001:0005b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如白月色頂戴五佛冠坐月輪中。",
        "from": "T20n1031_001:0005b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三去滿多嚩日囉二合引喃引嚩日囉二合引怛麼二合句引憾誦真言三遍已。",
        "from": "T20n1031_001:0005b27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於頂上散印。",
        "from": "T20n1031_001:0005b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結大日如來劍印。",
        "from": "T20n1031_001:0005b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手當心合掌。",
        "from": "T20n1031_001:0005b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈二頭指中節橫相跓。",
        "from": "T20n1031_001:0005b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二大拇指。",
        "from": "T20n1031_001:0005c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並押二頭指上節如劍形。",
        "from": "T20n1031_001:0005c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此印已。",
        "from": "T20n1031_001:0005c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀自心中有八葉蓮華。",
        "from": "T20n1031_001:0005c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於蓮華中想阿上字。",
        "from": "T20n1031_001:0005c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放金色光與印相應。",
        "from": "T20n1031_001:0005c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想彼阿上字了一切法本來不生。",
        "from": "T20n1031_001:0005c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦真言曰。",
        "from": "T20n1031_001:0005c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三去滿多母馱引南引惡引尾引囉吽引欠誦真言八遍。",
        "from": "T20n1031_001:0005c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印如前加持自身五處。",
        "from": "T20n1031_001:0005c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散印。",
        "from": "T20n1031_001:0005c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結普供養印。",
        "from": "T20n1031_001:0005c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手合掌。",
        "from": "T20n1031_001:0005c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右押左交上節即成。",
        "from": "T20n1031_001:0005c10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0005c11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三去滿多母馱引南薩嚩他去引欠嗢娜蘖二合帝颯頗二合囉呬引𤚥誐誐曩劍平娑嚩二合引賀引結印當心。",
        "from": "T20n1031_001:0005c15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言五遍。",
        "from": "T20n1031_001:0005c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想從印流出無量無邊香華飲食。",
        "from": "T20n1031_001:0005c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養盡虛空遍法界一切賢聖。",
        "from": "T20n1031_001:0005c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上散印。",
        "from": "T20n1031_001:0005c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次觀行布字法。",
        "from": "T20n1031_001:0005c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修瑜伽者應觀想。",
        "from": "T20n1031_001:0005c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自身眉間置吽字。",
        "from": "T20n1031_001:0005c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赤金色。",
        "from": "T20n1031_001:0005c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變成白毫相。",
        "from": "T20n1031_001:0005c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於腦交縫內置暗字。",
        "from": "T20n1031_001:0005c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白色光滿其腦中。",
        "from": "T20n1031_001:0005c21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於頂上置囕上字。",
        "from": "T20n1031_001:0005c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作赤色光分焰上掣。",
        "from": "T20n1031_001:0005c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於佛頂上應想唵字白色光照法界。",
        "from": "T20n1031_001:0005c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於自右足掌置娑嚩二合字。",
        "from": "T20n1031_001:0005c23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左足掌置賀字。",
        "from": "T20n1031_001:0005c23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀自心為菩提心。",
        "from": "T20n1031_001:0005c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離一切我離蘊處界能取所取。",
        "from": "T20n1031_001:0005c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於法平等。",
        "from": "T20n1031_001:0005c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知自心本來不生空無自性。",
        "from": "T20n1031_001:0005c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故應當觀察。",
        "from": "T20n1031_001:0005c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心非我人眾生壽者等性。",
        "from": "T20n1031_001:0005c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1031_001:0005c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼我人等性。",
        "from": "T20n1031_001:0005c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無所造作無所得故。",
        "from": "T20n1031_001:0005c27_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我人等本無。",
        "from": "T20n1031_001:0005c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧有自性。",
        "from": "T20n1031_001:0005c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得遠離一切我見。",
        "from": "T20n1031_001:0005c28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心亦非蘊處界性。",
        "from": "T20n1031_001:0005c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1031_001:0005c29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此蘊等性。",
        "from": "T20n1031_001:0005c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於勝義中實不可得故。",
        "from": "T20n1031_001:0006a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蘊處界分別自性。",
        "from": "T20n1031_001:0006a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即非彼心。",
        "from": "T20n1031_001:0006a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是心亦非能取所取。",
        "from": "T20n1031_001:0006a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非彼能取妄想之心。",
        "from": "T20n1031_001:0006a03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非彼所取青黃等相故。",
        "from": "T20n1031_001:0006a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊言。",
        "from": "T20n1031_001:0006a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不住內亦不住外不住中間。",
        "from": "T20n1031_001:0006a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1031_001:0006a04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本來清淨無分別故。",
        "from": "T20n1031_001:0006a05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀察則知自心無我平等。",
        "from": "T20n1031_001:0006a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了一切法本來不生。",
        "from": "T20n1031_001:0006a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離妄分別。",
        "from": "T20n1031_001:0006a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆無自性猶如虛空。",
        "from": "T20n1031_001:0006a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣諸有情思惟愍念。",
        "from": "T20n1031_001:0006a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼無始來不知自心本來清淨。",
        "from": "T20n1031_001:0006a08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妄生分別顛倒鬼魅之所噉嚼。",
        "from": "T20n1031_001:0006a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於生死中受種種苦。",
        "from": "T20n1031_001:0006a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今云何起大精進。",
        "from": "T20n1031_001:0006a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸有情覺悟自心。",
        "from": "T20n1031_001:0006a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了清淨法。",
        "from": "T20n1031_001:0006a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼遠離虛妄分別。",
        "from": "T20n1031_001:0006a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是大悲為菩提心。",
        "from": "T20n1031_001:0006a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發是心已。",
        "from": "T20n1031_001:0006a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於囉字上具圓點。",
        "from": "T20n1031_001:0006a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即為囕字為法界種子。",
        "from": "T20n1031_001:0006a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想二囉字置二眼中。",
        "from": "T20n1031_001:0006a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如盛燈光普照一切。",
        "from": "T20n1031_001:0006a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用此光明智慧之眼。",
        "from": "T20n1031_001:0006a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自心中所置阿上字。",
        "from": "T20n1031_001:0006a14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了一切法本來不生。",
        "from": "T20n1031_001:0006a15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於阿字流出白色光明。",
        "from": "T20n1031_001:0006a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "照無邊塵沙世界。",
        "from": "T20n1031_001:0006a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除一切有情身中無明癡闇。",
        "from": "T20n1031_001:0006a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即想自身轉成毘盧遮那如來。",
        "from": "T20n1031_001:0006a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具頭冠瓔珞坐白蓮華。",
        "from": "T20n1031_001:0006a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如金色光明照曜住三摩地。",
        "from": "T20n1031_001:0006a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相應如是觀。",
        "from": "T20n1031_001:0006a19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結觀自在菩薩心印。",
        "from": "T20n1031_001:0006a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二手內相叉。",
        "from": "T20n1031_001:0006a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翹竪二大拇指。",
        "from": "T20n1031_001:0006a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印相即成。",
        "from": "T20n1031_001:0006a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印當心。",
        "from": "T20n1031_001:0006a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦觀自在菩薩心真言七遍。",
        "from": "T20n1031_001:0006a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印加持心額喉頂。",
        "from": "T20n1031_001:0006a23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0006a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿去引嚧引力迦迦半音呼娑嚩二合引賀引隨誦真言。",
        "from": "T20n1031_001:0006a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以右大拇指向身招之。",
        "from": "T20n1031_001:0006a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成召請即觀本尊心上有圓滿寂靜月輪。",
        "from": "T20n1031_001:0006a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月輪中右旋安布陀羅尼字。",
        "from": "T20n1031_001:0006a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字皆放白色光遍周法界。",
        "from": "T20n1031_001:0006a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光還入行者頂。",
        "from": "T20n1031_001:0006a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於修瑜伽者心月輪中。",
        "from": "T20n1031_001:0006a29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前右旋布列了了分明。",
        "from": "T20n1031_001:0006a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其字復放光明。",
        "from": "T20n1031_001:0006b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "准前作觀。",
        "from": "T20n1031_001:0006b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是觀已。",
        "from": "T20n1031_001:0006b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修瑜伽者自身與本尊觀自在菩薩身。",
        "from": "T20n1031_001:0006b02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等無差別。",
        "from": "T20n1031_001:0006b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼鏡像不一不異。",
        "from": "T20n1031_001:0006b03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應思惟字義。",
        "from": "T20n1031_001:0006b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿上字門者一切法本不生故。",
        "from": "T20n1031_001:0006b05_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囉字門者一切法遠離塵故。",
        "from": "T20n1031_001:0006b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攞字門者一切法相不可得故。",
        "from": "T20n1031_001:0006b06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此攞字為加聲。",
        "from": "T20n1031_001:0006b06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "變成力字。",
        "from": "T20n1031_001:0006b06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此力字中。",
        "from": "T20n1031_001:0006b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流出迦字。",
        "from": "T20n1031_001:0006b07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦字門者一切法無造作故。",
        "from": "T20n1031_001:0006b08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應如是觀繫心於真言文字之上。",
        "from": "T20n1031_001:0006b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即思字下所詮義門。",
        "from": "T20n1031_001:0006b09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂本來不生等如上四義如是作觀終而復始。",
        "from": "T20n1031_001:0006b10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為三摩地念誦。",
        "from": "T20n1031_001:0006b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作出聲念者。",
        "from": "T20n1031_001:0006b11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於真言中應作此句。",
        "from": "T20n1031_001:0006b11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言曰。",
        "from": "T20n1031_001:0006b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿去引嚧引力迦力者中含迦字也枳引囉底二合丁異反下同𡀩乞灑弭去尾步底銘娜娜娑嚩二合引賀次應觀前阿嚧力迦等四字黃金色。",
        "from": "T20n1031_001:0006b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前真言即得增益。",
        "from": "T20n1031_001:0006b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法中所求皆得。",
        "from": "T20n1031_001:0006b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前所觀心中阿上字及腦中暗字。",
        "from": "T20n1031_001:0006b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "體是一也。",
        "from": "T20n1031_001:0006b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼中囉字頂上囕字。",
        "from": "T20n1031_001:0006b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是四字義。",
        "from": "T20n1031_001:0006b19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以成自身等覺句也。",
        "from": "T20n1031_001:0006b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀菩提心。",
        "from": "T20n1031_001:0006b20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結前三昧耶印。",
        "from": "T20n1031_001:0006b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及結前法界生轉法輪并劍印等。",
        "from": "T20n1031_001:0006b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持自身五處。",
        "from": "T20n1031_001:0006b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦本真言。",
        "from": "T20n1031_001:0006b21_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即禮佛發願迴向已出道場。",
        "from": "T20n1031_001:0006b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常轉大乘華嚴般若等教。",
        "from": "T20n1031_001:0006b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及印佛印塔經行。",
        "from": "T20n1031_001:0006b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋遶窣堵波令速成就。",
        "from": "T20n1031_001:0006b24_3",
        "context_with_next_sentence": true
    },
