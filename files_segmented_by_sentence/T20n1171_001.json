[
    {
        "source_sentence": "金剛頂經瑜伽文殊師利菩薩法",
        "from": "T20n1171_001:0705a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一品亦名五字呪法",
        "from": "T20n1171_001:0705a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿",
        "from": "T20n1171_001:0705a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肅國公食邑三千戶賜紫贈司空謚大鑒正號大廣智大興善寺三藏沙門不空奉　詔譯爾時文殊師利菩薩。",
        "from": "T20n1171_001:0705a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在毘盧遮那大會中。",
        "from": "T20n1171_001:0705a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起頂禮佛足。",
        "from": "T20n1171_001:0705a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白佛言世尊。",
        "from": "T20n1171_001:0705a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今說本五字陀羅尼。",
        "from": "T20n1171_001:0705a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T20n1171_001:0705a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔誦一遍者。",
        "from": "T20n1171_001:0705a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來所說法義修多羅藏。",
        "from": "T20n1171_001:0705a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦受持等彼功德。",
        "from": "T20n1171_001:0705a14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘盧遮那佛。",
        "from": "T20n1171_001:0705a14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "告文殊師利言。",
        "from": "T20n1171_001:0705a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意說之。",
        "from": "T20n1171_001:0705a14_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時文殊師利即說。",
        "from": "T20n1171_001:0705a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明曰。",
        "from": "T20n1171_001:0705a15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿囉跛者曩纔說此陀羅尼。",
        "from": "T20n1171_001:0705a17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切如來所說法。",
        "from": "T20n1171_001:0705a17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝入五字陀羅尼中。",
        "from": "T20n1171_001:0705a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生般若波羅蜜多成就。",
        "from": "T20n1171_001:0705a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當說曼荼羅法。",
        "from": "T20n1171_001:0705a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或十四日十五日。",
        "from": "T20n1171_001:0705a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "選擇極清淨處作曼茶羅。",
        "from": "T20n1171_001:0705a20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以瞿摩夷塗地。",
        "from": "T20n1171_001:0705a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以白檀香泥塗之。",
        "from": "T20n1171_001:0705a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意大小。",
        "from": "T20n1171_001:0705a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於曼荼羅中。",
        "from": "T20n1171_001:0705a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫文殊師利五髻童子形狀。",
        "from": "T20n1171_001:0705a22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身如欝金色。",
        "from": "T20n1171_001:0705a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種瓔珞莊嚴其身。",
        "from": "T20n1171_001:0705a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手把金剛劍左手把梵夾。",
        "from": "T20n1171_001:0705a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐於月輪中。",
        "from": "T20n1171_001:0705a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於月輪四面。",
        "from": "T20n1171_001:0705a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周旋書五字陀羅尼。",
        "from": "T20n1171_001:0705a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿闍梨對於此壇。",
        "from": "T20n1171_001:0705a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結金剛劍印念誦。",
        "from": "T20n1171_001:0705a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時文殊師利加持此阿闍梨。",
        "from": "T20n1171_001:0705a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得無礙辯才。",
        "from": "T20n1171_001:0705a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍為現身。",
        "from": "T20n1171_001:0705a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一解釋此陀羅尼甚深義理。",
        "from": "T20n1171_001:0705a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿闍梨即當禮拜出道場外。",
        "from": "T20n1171_001:0705a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為弟子受菩薩戒。",
        "from": "T20n1171_001:0705a29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即以緋帛覆眼。",
        "from": "T20n1171_001:0705a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "引入壇場門次而立。",
        "from": "T20n1171_001:0705a29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時阿闍梨告弟子言。",
        "from": "T20n1171_001:0705b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今獲一切如來般若波羅蜜。",
        "from": "T20n1171_001:0705b02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自今已後不應向人而說此明。",
        "from": "T20n1171_001:0705b02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿令破汝三摩耶法。",
        "from": "T20n1171_001:0705b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼極應祕密。",
        "from": "T20n1171_001:0705b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿囉跛者曩者。",
        "from": "T20n1171_001:0705b04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是滿一切願義。",
        "from": "T20n1171_001:0705b04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1171_001:0705b04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字者樂欲菩提義。",
        "from": "T20n1171_001:0705b05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "囉字者深著不捨眾生義。",
        "from": "T20n1171_001:0705b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跛字者第一義諦義。",
        "from": "T20n1171_001:0705b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "者字者妙行義。",
        "from": "T20n1171_001:0705b06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩字者無自性義。",
        "from": "T20n1171_001:0705b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂欲菩提不捨眾生。",
        "from": "T20n1171_001:0705b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深入第一義諦中行行。",
        "from": "T20n1171_001:0705b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習諸法無有自性。",
        "from": "T20n1171_001:0705b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如是修滿一切願。",
        "from": "T20n1171_001:0705b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸願中證如來位及執金剛。",
        "from": "T20n1171_001:0705b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不求當得。",
        "from": "T20n1171_001:0705b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今又說契印曼茶羅。",
        "from": "T20n1171_001:0705b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中畫金剛劍。",
        "from": "T20n1171_001:0705b11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面各於本方。",
        "from": "T20n1171_001:0705b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫八供養契及四攝契。",
        "from": "T20n1171_001:0705b12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對於此壇念誦。",
        "from": "T20n1171_001:0705b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久即當成就。",
        "from": "T20n1171_001:0705b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今又說三摩耶曼荼羅。",
        "from": "T20n1171_001:0705b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中書五字及八供養四攝種子字。",
        "from": "T20n1171_001:0705b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對此壇念誦而作是言。",
        "from": "T20n1171_001:0705b15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿字門者諸法本不生。",
        "from": "T20n1171_001:0705b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日念誦。",
        "from": "T20n1171_001:0705b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久一切罪障消滅速得成就。",
        "from": "T20n1171_001:0705b17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今又說羯磨曼荼羅。",
        "from": "T20n1171_001:0705b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壇中安般若波羅蜜經卷。",
        "from": "T20n1171_001:0705b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日日讀誦念誦。",
        "from": "T20n1171_001:0705b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以種種供養而供養之。",
        "from": "T20n1171_001:0705b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久即當成就。",
        "from": "T20n1171_001:0705b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當說畫像法。",
        "from": "T20n1171_001:0705b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或白㲲絹素等中。",
        "from": "T20n1171_001:0705b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畫文殊師利菩薩。",
        "from": "T20n1171_001:0705b22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "坐月輪中。",
        "from": "T20n1171_001:0705b22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輪內周旋書五字。",
        "from": "T20n1171_001:0705b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面畫八供養及四攝。",
        "from": "T20n1171_001:0705b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如大壇法。",
        "from": "T20n1171_001:0705b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對此像前如法念誦而作是言。",
        "from": "T20n1171_001:0705b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法自性成就。",
        "from": "T20n1171_001:0705b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦數滿五十萬遍。",
        "from": "T20n1171_001:0705b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即獲無盡辯才。",
        "from": "T20n1171_001:0705b25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如文殊師利菩薩等無有異。",
        "from": "T20n1171_001:0705b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛騰虛空所求世間出世間事悉得成就。",
        "from": "T20n1171_001:0705b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又念誦數滿一俱胝。",
        "from": "T20n1171_001:0705b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸苦惱。",
        "from": "T20n1171_001:0705b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿二俱胝遍。",
        "from": "T20n1171_001:0705b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五無間等一切罪障永盡無餘。",
        "from": "T20n1171_001:0705b29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三俱胝遍。",
        "from": "T20n1171_001:0705b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證悟一切諸三昧門。",
        "from": "T20n1171_001:0705c01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四俱胝遍獲大聞持。",
        "from": "T20n1171_001:0705c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五俱胝遍成阿耨多羅三藐三菩提。",
        "from": "T20n1171_001:0705c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法於舍利塔四面。",
        "from": "T20n1171_001:0705c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周旋右轉書五字陀羅尼。",
        "from": "T20n1171_001:0705c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遶塔行道念誦勿令斷絕。",
        "from": "T20n1171_001:0705c04_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿五落叉遍。",
        "from": "T20n1171_001:0705c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時如來及文殊師利執金剛等。",
        "from": "T20n1171_001:0705c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於虛空中而現其身仍為說法。",
        "from": "T20n1171_001:0705c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命童真妙吉祥　　我依瑜伽說念誦",
        "from": "T20n1171_001:0705c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口意業金剛念　　如來甚深三密門",
        "from": "T20n1171_001:0705c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者應發普賢心　　從師應受金剛戒",
        "from": "T20n1171_001:0705c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不顧身命起慈悲　　方可堪入解脫輪",
        "from": "T20n1171_001:0705c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應從師受三麼耶　　契印密語如經說",
        "from": "T20n1171_001:0705c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬阿闍梨如佛想　　於同學所慇重心",
        "from": "T20n1171_001:0705c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於山間阿蘭若　　流泉浴池悅意樹",
        "from": "T20n1171_001:0705c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山峯石窟逈樹邊　　建立壇場如本法",
        "from": "T20n1171_001:0705c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴精室置本尊　　隨力供養一心住",
        "from": "T20n1171_001:0705c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍觀十方諸佛海　　供養禮諸如來足",
        "from": "T20n1171_001:0705c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為成三業金剛故　　當於二手舌心中",
        "from": "T20n1171_001:0705c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應想五智金剛杵　　由此加持皆悉地",
        "from": "T20n1171_001:0705c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應結契名警覺　　二手皆作金剛拳",
        "from": "T20n1171_001:0705c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧相鉤竪進力　　二度側拄成覺悟",
        "from": "T20n1171_001:0705c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "警覺真言曰。",
        "from": "T20n1171_001:0705c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮東方阿閦尊　　捨身求請不退轉",
        "from": "T20n1171_001:0706a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "全身著地以心禮　　金剛合掌舒頂上",
        "from": "T20n1171_001:0706a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身求請加持真言曰。",
        "from": "T20n1171_001:0706a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當敬禮寶生尊　　捨身求請灌頂位",
        "from": "T20n1171_001:0706a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌當於心　　以額著地虔誠禮",
        "from": "T20n1171_001:0706a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身求請灌頂真言曰。",
        "from": "T20n1171_001:0706a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮觀自在王尊　　捨身求請三麼地",
        "from": "T20n1171_001:0706a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌置頂上　　以口著地虔誠禮",
        "from": "T20n1171_001:0706a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身求請三昧真言曰。",
        "from": "T20n1171_001:0706a16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次禮不空成就尊　　捨身求請善巧智",
        "from": "T20n1171_001:0706a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌安於心　　以頂著地稽首禮",
        "from": "T20n1171_001:0706a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨身求請方便真言曰。",
        "from": "T20n1171_001:0706a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復敬禮十方佛　　想身遍在諸佛前",
        "from": "T20n1171_001:0706a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀想五輪著地禮　　當結金剛三麼耶",
        "from": "T20n1171_001:0706a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍禮十方真言曰。",
        "from": "T20n1171_001:0706a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次誦成就妙真言　　所有眾生求勝事",
        "from": "T20n1171_001:0706b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸如來悉加持　　速令成就無上道",
        "from": "T20n1171_001:0706b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成熟一切眾生真言曰。",
        "from": "T20n1171_001:0706b06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當結跏端身坐　　淨除三業令清淨",
        "from": "T20n1171_001:0706b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法本性清淨故　　令我此身淨無垢",
        "from": "T20n1171_001:0706b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨三業真言曰。",
        "from": "T20n1171_001:0706b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵娑嚩二合婆引嚩舜入聲馱引薩嚩達麼引娑嚩二合婆嚩舜入聲度㟏次金剛合掌十度初分交誦此真言曰。",
        "from": "T20n1171_001:0706b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合引惹里深交諸度拳已成金剛縛誦此真言曰。",
        "from": "T20n1171_001:0706b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當開心入佛智　　當於二乳想兩字",
        "from": "T20n1171_001:0706b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛囉吒字皆白色　　其字想為二戶扇",
        "from": "T20n1171_001:0706b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手當結金剛縛　　三拍當心開門戶",
        "from": "T20n1171_001:0706b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開心真言曰。",
        "from": "T20n1171_001:0706b22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀妙蓮阿字門　　以印召入於心殿",
        "from": "T20n1171_001:0706b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧為月金剛縛　　禪智在掌想字入",
        "from": "T20n1171_001:0706b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛入字真言曰。",
        "from": "T20n1171_001:0706b26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當結閉心戶印　　如前入印之幖幟",
        "from": "T20n1171_001:0706b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力屈在禪智上　　即得堅固不退轉",
        "from": "T20n1171_001:0706b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛拳真言曰。",
        "from": "T20n1171_001:0706c01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結文殊三麼耶　　十度相叉成滿月",
        "from": "T20n1171_001:0706c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直申忍願金剛劍　　想身同等妙吉祥",
        "from": "T20n1171_001:0706c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三麼耶真言曰。",
        "from": "T20n1171_001:0706c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當結喜三昧印　　定慧為月堅固縛",
        "from": "T20n1171_001:0706c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍辱願度中交合　　檀慧禪智竪相著",
        "from": "T20n1171_001:0706c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1171_001:0706c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛降三世　　想身同彼無差別",
        "from": "T20n1171_001:0706c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀二羽金剛拳　　檀慧相鉤竪進力",
        "from": "T20n1171_001:0706c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左轉辟除右結界　　悲心示現威怒形",
        "from": "T20n1171_001:0706c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降三世真言曰。",
        "from": "T20n1171_001:0706c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮花三麼耶　　為令觀行成就故",
        "from": "T20n1171_001:0706c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度相叉作為月　　禪智檀慧竪相著",
        "from": "T20n1171_001:0706c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1171_001:0706c22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合跛娜麼二合三麼耶娑怛鑁三合行者應修阿薩頗那伽法。",
        "from": "T20n1171_001:0706c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修此法者。",
        "from": "T20n1171_001:0706c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動支節止出入息。",
        "from": "T20n1171_001:0706c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令其微細勿使散亂。",
        "from": "T20n1171_001:0706c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即應觀於虛空一切諸佛。",
        "from": "T20n1171_001:0706c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如胡麻遍滿十方。",
        "from": "T20n1171_001:0706c26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛彈指告行者言。",
        "from": "T20n1171_001:0706c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T20n1171_001:0706c27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝觀本心。",
        "from": "T20n1171_001:0706c27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者聞已即想自身禮諸佛足。",
        "from": "T20n1171_001:0706c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮畢諦觀本心白諸佛言。",
        "from": "T20n1171_001:0706c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心相無體云何修證。",
        "from": "T20n1171_001:0706c29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛告行者言。",
        "from": "T20n1171_001:0707a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子。",
        "from": "T20n1171_001:0707a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝觀心中月輪如在輕霧。",
        "from": "T20n1171_001:0707a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦瑩徹菩提真言。",
        "from": "T20n1171_001:0707a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀心月真言曰。",
        "from": "T20n1171_001:0707a03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵質多鉢囉二合底丁以反吠鄧迦嚕彌行者應了了諦觀。",
        "from": "T20n1171_001:0707a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久當見清淨菩提心。",
        "from": "T20n1171_001:0707a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸塵垢淨如滿月。",
        "from": "T20n1171_001:0707a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即誦菩提心真言曰。",
        "from": "T20n1171_001:0707a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵冒地質多母怛跛二合引那夜引彌想菩提月中有曇字。",
        "from": "T20n1171_001:0707a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如金色輝曜。",
        "from": "T20n1171_001:0707a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如日放大光明。",
        "from": "T20n1171_001:0707a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便即變成般若波羅蜜劍。",
        "from": "T20n1171_001:0707a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸分別能斷煩惱。",
        "from": "T20n1171_001:0707a10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想為智劍真言曰。",
        "from": "T20n1171_001:0707a10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵底瑟姹二合渴誐想其智劍漸漸增大遍周法界真言曰。",
        "from": "T20n1171_001:0707a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵娑頗二合囉渴誐想其智劍漸漸收攝等自身量真言曰。",
        "from": "T20n1171_001:0707a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵僧賀囉渴誐為令智劍堅固不散復誦真言曰。",
        "from": "T20n1171_001:0707a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵涅哩二合荼底瑟姹二合渴誐想空中如來盡入智劍同為一體。",
        "from": "T20n1171_001:0707a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是思惟。",
        "from": "T20n1171_001:0707a18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼諸佛體性我亦同然真言曰。",
        "from": "T20n1171_001:0707a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵三麼喻引含摩訶引三摩喻引含薩嚩怛他蘖多鼻二去󰂛引地渴誐怛麼二合句引含想其智劍漸漸變成文殊師利童真菩薩。",
        "from": "T20n1171_001:0707a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具大威德身著種種瓔珞。",
        "from": "T20n1171_001:0707a23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂想五髻。",
        "from": "T20n1171_001:0707a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手持智劍。",
        "from": "T20n1171_001:0707a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手執青蓮花。",
        "from": "T20n1171_001:0707a24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "花上有般若波羅蜜經夾。",
        "from": "T20n1171_001:0707a25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色如欝金。",
        "from": "T20n1171_001:0707a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心誦阿囉跛者曩一遍。",
        "from": "T20n1171_001:0707a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛智劍印　　止觀相叉作滿月",
        "from": "T20n1171_001:0707a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忍願皆竪如劍形　　印心及額喉頂上",
        "from": "T20n1171_001:0707a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成護身堅本尊真言曰。",
        "from": "T20n1171_001:0707a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當灌頂結寶印　　二手相叉作為月",
        "from": "T20n1171_001:0707b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力反屈如寶形　　禪智二度下相捻",
        "from": "T20n1171_001:0707b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於額上分兩邊　　便結智拳如繫帛",
        "from": "T20n1171_001:0707b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩手向前徐徐散　　當知已繫無垢繒",
        "from": "T20n1171_001:0707b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1171_001:0707b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結寶劍自灌頂　　二手合掌屈進力",
        "from": "T20n1171_001:0707b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智皆屈入掌中　　置於額上分兩邊",
        "from": "T20n1171_001:0707b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "灌頂真言曰。",
        "from": "T20n1171_001:0707b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復結於甲冑印　　二手皆作金剛拳",
        "from": "T20n1171_001:0707b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置於心前竪進力　　左右二度想唵砧",
        "from": "T20n1171_001:0707b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想流清光為綠色　　心前三轉遶背後",
        "from": "T20n1171_001:0707b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復至臍下及兩膝　　又轉至臍遶腰後",
        "from": "T20n1171_001:0707b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從腰到心轉兩膊　　從膊至喉向頸後",
        "from": "T20n1171_001:0707b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復從頸後至額前　　從額至腦結智拳",
        "from": "T20n1171_001:0707b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "徐徐散下如垂帶　　上觀旋轉如舞勢",
        "from": "T20n1171_001:0707b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手相叉成滿月甲冑真言曰。",
        "from": "T20n1171_001:0707b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次陳金剛拍掌儀　　二羽齊拍一相拍",
        "from": "T20n1171_001:0707b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由陳拍印真言并　　能令聖眾發歡喜",
        "from": "T20n1171_001:0707b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "速獲本尊堅固體歡喜真言曰。",
        "from": "T20n1171_001:0707b29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當行者座前觀　　八葉蓮花具鬚蘂",
        "from": "T20n1171_001:0707c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上觀師子妙高座　　座上復有七寶樓",
        "from": "T20n1171_001:0707c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中想七寶蓮花王　　上想曇字具威光",
        "from": "T20n1171_001:0707c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍照法界靡不周　　其字變為金剛利",
        "from": "T20n1171_001:0707c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了諦觀如本形　　召請菩薩入想身",
        "from": "T20n1171_001:0707c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手作月進如鉤　　想身同於彼菩薩",
        "from": "T20n1171_001:0707c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鉤菩薩真言曰。",
        "from": "T20n1171_001:0707c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當結索入尊身　　結月禪押智入掌",
        "from": "T20n1171_001:0707c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此密印加持故　　變為一體無有差",
        "from": "T20n1171_001:0707c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛索真言曰。",
        "from": "T20n1171_001:0707c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當鎖印令堅固　　作月四度猶如環",
        "from": "T20n1171_001:0707c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此祕印威力故　　悉令堅固而不變",
        "from": "T20n1171_001:0707c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鎖真言曰。",
        "from": "T20n1171_001:0707c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結鈴印令歡喜　　禪智八掌如鈴鐸",
        "from": "T20n1171_001:0707c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令尊及眾皆歡喜　　加持令速妙成就",
        "from": "T20n1171_001:0707c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鈴真言曰。",
        "from": "T20n1171_001:0707c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵健吒噁噁行者次當兩手捧遏伽想洗金剛利菩薩及諸眷屬足。",
        "from": "T20n1171_001:0707c23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以百字真言加持遏伽。",
        "from": "T20n1171_001:0707c23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而獻遏伽真言曰。",
        "from": "T20n1171_001:0707c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結曼殊羯磨印　　二羽皆作金剛拳",
        "from": "T20n1171_001:0707c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪羽置於自心上　　右手猶如執劍勢",
        "from": "T20n1171_001:0707c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此羯麼妙印力　　身獲如尊等無異",
        "from": "T20n1171_001:0707c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羯麼真言曰。",
        "from": "T20n1171_001:0707c29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛利劍印　　結月忍願申如劍",
        "from": "T20n1171_001:0708a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此金剛利妙印　　當獲般若甚深智",
        "from": "T20n1171_001:0708a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛利真言曰。",
        "from": "T20n1171_001:0708a04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復當結內供養　　結月當心竪禪智",
        "from": "T20n1171_001:0708a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結金剛嬉戲印　　速滿檀那波羅蜜",
        "from": "T20n1171_001:0708a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛嬉戲真言曰。",
        "from": "T20n1171_001:0708a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛鬘供養　　依前嬉戲直申臂",
        "from": "T20n1171_001:0708a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結此印加持故　　當滿淨戒波羅密",
        "from": "T20n1171_001:0708a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛鬘真言曰。",
        "from": "T20n1171_001:0708a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛歌詠印　　鬘至臍口垂下散",
        "from": "T20n1171_001:0708a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結金剛歌密印　　速獲安忍波羅蜜",
        "from": "T20n1171_001:0708a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛歌真言曰。",
        "from": "T20n1171_001:0708a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛舞供養　　二手拳旋如舞勢",
        "from": "T20n1171_001:0708a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結舞印加持故　　速滿精進波羅蜜",
        "from": "T20n1171_001:0708a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛舞印真言曰。",
        "from": "T20n1171_001:0708a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛外供養　　二手作月向下散",
        "from": "T20n1171_001:0708a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結燒香印力故　　當證靜慮波羅蜜",
        "from": "T20n1171_001:0708a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛燒香真言曰。",
        "from": "T20n1171_001:0708a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛散花印　　結月向上如散花",
        "from": "T20n1171_001:0708a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此散花印加持　　速證般若波羅蜜",
        "from": "T20n1171_001:0708a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛散花真言曰。",
        "from": "T20n1171_001:0708a28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛燈明印　　作月禪智頭相著",
        "from": "T20n1171_001:0708b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結金剛燈明印　　當得方便波羅蜜",
        "from": "T20n1171_001:0708b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛燈明真言曰。",
        "from": "T20n1171_001:0708b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛塗香印　　月當胸散如塗香",
        "from": "T20n1171_001:0708b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由結塗香印加持　　速滿誓願波羅蜜",
        "from": "T20n1171_001:0708b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛塗香真言曰。",
        "from": "T20n1171_001:0708b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵蘇健蕩倪倪以兮反行者次應誦一百八名讚供養本尊。",
        "from": "T20n1171_001:0708b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結金剛利劍印。",
        "from": "T20n1171_001:0708b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於心上誦百字真言加持自身。",
        "from": "T20n1171_001:0708b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假使過去世中造種種惡業五無間等一切罪障。",
        "from": "T20n1171_001:0708b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此百字真言加持故。",
        "from": "T20n1171_001:0708b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切罪障悉皆消滅。",
        "from": "T20n1171_001:0708b13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見身獲得首楞嚴三昧。",
        "from": "T20n1171_001:0708b13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若心散亂數誦此明或一七三七乃至七七一百八遍。",
        "from": "T20n1171_001:0708b14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心離攀緣速得三摩地。",
        "from": "T20n1171_001:0708b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百字真言唵渴誐薩怛嚩二合一三麼耶麼努播引攞耶二合二渴誐薩怛嚩二合三底吠二合怒跛底瑟姹二合四涅哩二合住茶護反銘婆去嚩五素覩使喻二合銘婆去嚩六阿上拏囉訖覩二合銘婆去嚩七素布使喻二合引銘婆去嚩八薩嚩悉朕提飲反銘鉢囉二合也瑳九薩嚩羯磨素者銘十質多失唎二合藥句嚕十一吽引訶訶訶訶斛引婆誐鑁十二薩嚩怛他蘖多十三渴誐麼銘門上者十四渴倪倪以反婆嚩十五摩訶三摩耶薩怛嚩二合惡引十六不散前印。",
        "from": "T20n1171_001:0708b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀前有本尊。",
        "from": "T20n1171_001:0708b26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及想自身如本尊無異。",
        "from": "T20n1171_001:0708b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了諦觀即誦五字陀羅尼。",
        "from": "T20n1171_001:0708b27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以金剛語誦。",
        "from": "T20n1171_001:0708b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或分明蓮華語誦。",
        "from": "T20n1171_001:0708b28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或誦七遍三七遍。",
        "from": "T20n1171_001:0708b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印於頂上解散。",
        "from": "T20n1171_001:0708b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次即把念珠當心念誦不緩不急。",
        "from": "T20n1171_001:0708c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或一百八遍或一千乃至一萬遍。",
        "from": "T20n1171_001:0708c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦數畢。",
        "from": "T20n1171_001:0708c02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手捧珠安於頂上。",
        "from": "T20n1171_001:0708c02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後置本處。",
        "from": "T20n1171_001:0708c02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若三摩地念誦者。",
        "from": "T20n1171_001:0708c03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當心觀大圓鏡智。",
        "from": "T20n1171_001:0708c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "中布五字門。",
        "from": "T20n1171_001:0708c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了了諦觀。",
        "from": "T20n1171_001:0708c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨義相應。",
        "from": "T20n1171_001:0708c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心與般若波羅蜜合。",
        "from": "T20n1171_001:0708c05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名三摩地念誦。",
        "from": "T20n1171_001:0708c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若身疲懈。",
        "from": "T20n1171_001:0708c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結本尊劍印。",
        "from": "T20n1171_001:0708c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦五字陀羅尼七遍。",
        "from": "T20n1171_001:0708c06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以八大供養供養諸佛。",
        "from": "T20n1171_001:0708c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以妙音辭稱揚讚歎。",
        "from": "T20n1171_001:0708c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻閼伽水。",
        "from": "T20n1171_001:0708c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以降三世印左旋解界。",
        "from": "T20n1171_001:0708c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即結金剛利劍印。",
        "from": "T20n1171_001:0708c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉送諸聖。",
        "from": "T20n1171_001:0708c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各還本宮。",
        "from": "T20n1171_001:0708c09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1171_001:0708c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵訖哩二合覩引嚩無莫反一薩嚩薩怛嚩二合囉他二合二悉地捺多引三也他引努誐引上四蘖縒持挽二合沒馱尾灑焰五布曩囉引誐六麼囊引也都七唵渴誐薩怛嚩二合目八作此法已。",
        "from": "T20n1171_001:0708c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重以三麼耶印誦加持明以印四處。",
        "from": "T20n1171_001:0708c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後灌頂。",
        "from": "T20n1171_001:0708c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被金剛甲冑。",
        "from": "T20n1171_001:0708c15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依前四禮禮四方佛。",
        "from": "T20n1171_001:0708c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "懺悔發願等。",
        "from": "T20n1171_001:0708c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後依閑靜處。",
        "from": "T20n1171_001:0708c16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴以香花住本尊三摩地。",
        "from": "T20n1171_001:0708c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀誦方廣一切大乘經典大般若大品。",
        "from": "T20n1171_001:0708c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至文殊般若等。",
        "from": "T20n1171_001:0708c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意經行。",
        "from": "T20n1171_001:0708c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有智者依此法　　晝夜四時精進修",
        "from": "T20n1171_001:0708c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見世證得歡喜地　　後十六生成正覺",
        "from": "T20n1171_001:0708c20_0",
        "context_with_next_sentence": true
    },
    {
