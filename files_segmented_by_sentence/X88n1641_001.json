{
    "X88n1641_001:0022b06_0": "見聞錄",
    "X88n1641_001:0022b08_0": "古吳沙門　智旭　隨筆",
    "X88n1641_001:0022b09_0": "楚中有一生員。",
    "X88n1641_001:0022b09_1": "心迹正直。",
    "X88n1641_001:0022b09_2": "值冥府缺第七殿。",
    "X88n1641_001:0022b09_3": "上帝命暫主之。",
    "X88n1641_001:0022b10_4": "每隔數日則入冥理事。",
    "X88n1641_001:0022b10_5": "但正坐簡閱文簿。",
    "X88n1641_001:0022b10_6": "不勞簽判。",
    "X88n1641_001:0022b11_7": "而隨彼前人行業。",
    "X88n1641_001:0022b11_8": "罪福異趣。",
    "X88n1641_001:0022b11_9": "每見有自上刀山劍樹者。",
    "X88n1641_001:0022b12_10": "輒使左右救之。",
    "X88n1641_001:0022b12_11": "愈救愈上。",
    "X88n1641_001:0022b12_12": "竟莫能挽也。",
    "X88n1641_001:0022b12_13": "一日閱簿。",
    "X88n1641_001:0022b13_14": "見其妻有一罪款云。",
    "X88n1641_001:0022b13_15": "盜鄰雞一隻。",
    "X88n1641_001:0022b13_16": "連毛重一斤十二兩。",
    "X88n1641_001:0022b14_17": "遂折而識之。",
    "X88n1641_001:0022b14_18": "回陽詰問其妻。",
    "X88n1641_001:0022b14_19": "妻尚抵謾。",
    "X88n1641_001:0022b14_20": "彼述冥間所見質之。",
    "X88n1641_001:0022b15_21": "乃首曰。",
    "X88n1641_001:0022b15_22": "鄰雞食所曬物。",
    "X88n1641_001:0022b15_23": "失手誤打令死。",
    "X88n1641_001:0022b16_24": "懼鄰婦詬厲。",
    "X88n1641_001:0022b16_25": "故尚藏未發耳。",
    "X88n1641_001:0022b16_26": "因取出秤之。",
    "X88n1641_001:0022b16_27": "斤兩不爽。",
    "X88n1641_001:0022b17_28": "相對驚異。",
    "X88n1641_001:0022b17_29": "遂以死雞并價償謝鄰人。",
    "X88n1641_001:0022b17_30": "未幾復入冥。",
    "X88n1641_001:0022b18_31": "簡視前簿折痕如故。",
    "X88n1641_001:0022b18_32": "而罪欵已無影迹矣(江西養智禪人說)。",
    "X88n1641_001:0022b20_0": "乙卯科浙省解元馮銓。",
    "X88n1641_001:0022b20_1": "因會試入燕都。",
    "X88n1641_001:0022b20_2": "有一老人止生二女。",
    "X88n1641_001:0022b21_3": "仰銓為名士也。",
    "X88n1641_001:0022b21_4": "拜而托之。",
    "X88n1641_001:0022b21_5": "銓下第歸。",
    "X88n1641_001:0022b21_6": "帶至揚州。",
    "X88n1641_001:0022b22_7": "竟潛賣與娼家。",
    "X88n1641_001:0022b22_8": "媒來取二女。",
    "X88n1641_001:0022b22_9": "二女詬為誣誑。",
    "X88n1641_001:0022b22_10": "媒出詮手書示之。",
    "X88n1641_001:0022b23_11": "二女驚哭。",
    "X88n1641_001:0022b23_12": "遂投水死。",
    "X88n1641_001:0022b23_13": "是夜詮妻夢二散髮女子從溝道入。",
    "X88n1641_001:0022b24_14": "一鬼從之。",
    "X88n1641_001:0022b24_15": "手持虎頭牌。",
    "X88n1641_001:0022b24_16": "有速拿馮詮四字。",
    "X88n1641_001:0022c01_17": "驚異而醒。",
    "X88n1641_001:0022c01_18": "未幾詮安隱歸家。",
    "X88n1641_001:0022c01_19": "妻相接甚歡。",
    "X88n1641_001:0022c01_20": "詮問曰。",
    "X88n1641_001:0022c02_21": "我已下第。",
    "X88n1641_001:0022c02_22": "胡故歡甚。",
    "X88n1641_001:0022c02_23": "妻默不言。",
    "X88n1641_001:0022c02_24": "再三逼問。",
    "X88n1641_001:0022c02_25": "乃述前夢。",
    "X88n1641_001:0022c03_26": "詮正經行樓上。",
    "X88n1641_001:0022c03_27": "聞說夢畢。",
    "X88n1641_001:0022c03_28": "身即戰慄從樓墮下。",
    "X88n1641_001:0022c04_0": "七竅流血悶絕於地。",
    "X88n1641_001:0022c04_1": "家人急扶起。",
    "X88n1641_001:0022c04_2": "喚醒之。",
    "X88n1641_001:0022c04_3": "乃具述負心事。",
    "X88n1641_001:0022c05_4": "言畢遂死(舟中嘉興人說)。",
    "X88n1641_001:0022c06_0": "蘇州庠生陸穀。",
    "X88n1641_001:0022c06_1": "字戩夫。",
    "X88n1641_001:0022c06_2": "曩與予同參寒灰湛明諸公。",
    "X88n1641_001:0022c07_0": "後專精禪學。",
    "X88n1641_001:0022c07_1": "頗有省發。",
    "X88n1641_001:0022c07_2": "益復沉靜。",
    "X88n1641_001:0022c07_3": "庚午歲暮乘小舟有所往。",
    "X88n1641_001:0022c08_4": "忽遇糧船上六人借登其舟。",
    "X88n1641_001:0022c08_5": "舟遂覆。",
    "X88n1641_001:0022c08_6": "六人皆無恙。",
    "X88n1641_001:0022c09_7": "穀竟溺死。",
    "X88n1641_001:0022c09_8": "家屬償其修行無靈驗。",
    "X88n1641_001:0022c09_9": "乃示夢曰。",
    "X88n1641_001:0022c09_10": "余往世曾以一方便害此六人。",
    "X88n1641_001:0022c10_11": "今償夙債。",
    "X88n1641_001:0022c10_12": "非修行咎也。",
    "X88n1641_001:0022c11_0": "設不修行。",
    "X88n1641_001:0022c11_1": "報當更劇矣。",
    "X88n1641_001:0022c12_0": "洞庭西山蔡坦如居士。",
    "X88n1641_001:0022c12_1": "妻甚賢良。",
    "X88n1641_001:0022c12_2": "持齋念佛放生然燈。",
    "X88n1641_001:0022c13_3": "密作眾福不求人知。",
    "X88n1641_001:0022c13_4": "既病劇。",
    "X88n1641_001:0022c13_5": "謂坦如曰。",
    "X88n1641_001:0022c13_6": "死固不須擇日。",
    "X88n1641_001:0022c14_7": "但世人俗見謂修行人乃惡日死。",
    "X88n1641_001:0022c14_8": "亦所不便。",
    "X88n1641_001:0022c14_9": "幸為擇日。",
    "X88n1641_001:0022c15_10": "明日吉乎。",
    "X88n1641_001:0022c15_11": "答云不吉。",
    "X88n1641_001:0022c15_12": "後日吉乎。",
    "X88n1641_001:0022c15_13": "答云亦不吉。",
    "X88n1641_001:0022c16_0": "乃曰。",
    "X88n1641_001:0022c16_1": "吾不能更待矣。",
    "X88n1641_001:0022c16_2": "今日吉乎。",
    "X88n1641_001:0022c16_3": "答云今日頗吉。",
    "X88n1641_001:0022c16_4": "因即命取水澡浴。",
    "X88n1641_001:0022c17_5": "集親友念佛。",
    "X88n1641_001:0022c17_6": "正坐合掌而逝。",
    "X88n1641_001:0022c18_0": "吳江太湖灘有一老人。",
    "X88n1641_001:0022c18_1": "生平惟喜念佛放生。",
    "X88n1641_001:0022c18_2": "別無所知。",
    "X88n1641_001:0022c19_3": "每行路時拾灘頭螄蜆放入水中。",
    "X88n1641_001:0022c19_4": "雖極冗不顧。",
    "X88n1641_001:0022c19_5": "平日遇有生命輒解衣割食買放。",
    "X88n1641_001:0022c20_6": "曾無退懈。",
    "X88n1641_001:0022c20_7": "忽一日謂家人曰。",
    "X88n1641_001:0022c21_8": "吾當西逝。",
    "X88n1641_001:0022c21_9": "可集親友送我。",
    "X88n1641_001:0022c21_10": "因集眾念佛。",
    "X88n1641_001:0022c21_11": "安然坐逝。",
    "X88n1641_001:0022c22_12": "異香經宿不散(吳江鑒空師說)。",
    "X88n1641_001:0022c23_0": "杭州北關羅四。",
    "X88n1641_001:0022c23_1": "造大悲像。",
    "X88n1641_001:0022c23_2": "鑄鏡光。",
    "X88n1641_001:0022c23_3": "有老嫗以一小鏡相助。",
    "X88n1641_001:0022c24_4": "羅愛其古。",
    "X88n1641_001:0022c24_5": "存之。",
    "X88n1641_001:0022c24_6": "初鑄僅成四邊。",
    "X88n1641_001:0022c24_7": "二鑄僅成半鏡。",
    "X88n1641_001:0023a01_0": "三鑄中缺一孔。",
    "X88n1641_001:0023a01_1": "與所留古鏡大小正等。",
    "X88n1641_001:0023a01_2": "乃出所留鏡投爐且云。",
    "X88n1641_001:0023a02_3": "此鑄若成。",
    "X88n1641_001:0023a02_4": "吾當懺悔。",
    "X88n1641_001:0023a02_5": "若復不成。",
    "X88n1641_001:0023a02_6": "非吾咎矣。",
    "X88n1641_001:0023a03_0": "鑄果立就。",
    "X88n1641_001:0023a03_1": "於是復捐貲禮懺。",
    "X88n1641_001:0023a03_2": "今其鏡現在龍居永慶寺懺壇。",
    "X88n1641_001:0023a05_0": "姑蘇陽山西王象橋。",
    "X88n1641_001:0023a05_1": "有居民夫婦。",
    "X88n1641_001:0023a05_2": "每至稻熟時輒於鄰田中搣取禾穗以自益。",
    "X88n1641_001:0023a06_3": "忽一日亡。",
    "X88n1641_001:0023a06_4": "父母附於女身大詬曰。",
    "X88n1641_001:0023a07_5": "汝盜鄰家穀。",
    "X88n1641_001:0023a07_6": "冥府乃督我搣己田中穗償之。",
    "X88n1641_001:0023a08_0": "兩手皆傷。",
    "X88n1641_001:0023a08_1": "不勝苦痛。",
    "X88n1641_001:0023a08_2": "汝何害我至此耶。",
    "X88n1641_001:0023a09_0": "又一居民植菜。",
    "X88n1641_001:0023a09_1": "有鄰人齊根截去一疇。",
    "X88n1641_001:0023a09_2": "彼忍而不較。",
    "X88n1641_001:0023a10_0": "菜乃從根復生。",
    "X88n1641_001:0023a10_1": "茂盛倍常。",
    "X88n1641_001:0023a10_2": "次夜鄰又截去一疇。",
    "X88n1641_001:0023a10_3": "彼不復堪。",
    "X88n1641_001:0023a11_4": "痛加詛罵。",
    "X88n1641_001:0023a11_5": "此疇所留菜根倍多。",
    "X88n1641_001:0023a11_6": "竟枯腐無復生者。",
    "X88n1641_001:0023a13_0": "又一居民索陳債。",
    "X88n1641_001:0023a13_1": "負債者嫌其太迫。",
    "X88n1641_001:0023a13_2": "即口牴之。",
    "X88n1641_001:0023a13_3": "彼含恨言。",
    "X88n1641_001:0023a14_4": "如何負我物而不肯償我。",
    "X88n1641_001:0023a14_5": "必為毒蛇噬之。",
    "X88n1641_001:0023a14_6": "未幾患黃病。",
    "X88n1641_001:0023a15_7": "展轉牀席者年餘。",
    "X88n1641_001:0023a15_8": "負債人聞其病篤。",
    "X88n1641_001:0023a15_9": "因念云。",
    "X88n1641_001:0023a16_0": "我本無心負彼。",
    "X88n1641_001:0023a16_1": "因彼態太惡。",
    "X88n1641_001:0023a16_2": "故謾相牴耳。",
    "X88n1641_001:0023a16_3": "今聞其抱病。",
    "X88n1641_001:0023a17_4": "我當償之。",
    "X88n1641_001:0023a17_5": "乃備一本一利并禮物四盒往謝。",
    "X88n1641_001:0023a17_6": "彼人喜甚。",
    "X88n1641_001:0023a18_7": "相留對飲。",
    "X88n1641_001:0023a18_8": "飲醉忽吐一蛇。",
    "X88n1641_001:0023a18_9": "厥病遂愈。",
    "X88n1641_001:0023a19_0": "杭州鄉民有田數畒。",
    "X88n1641_001:0023a19_1": "界在祝鄉宦田中。",
    "X88n1641_001:0023a19_2": "祝以勢力迫取之。",
    "X88n1641_001:0023a20_3": "民無可訴。",
    "X88n1641_001:0023a20_4": "誓來生作蛇相螫。",
    "X88n1641_001:0023a20_5": "遂得重病。",
    "X88n1641_001:0023a20_6": "命匠作棺留一孔穴。",
    "X88n1641_001:0023a21_7": "匠問知其故。",
    "X88n1641_001:0023a21_8": "以白於祝。",
    "X88n1641_001:0023a21_9": "祝悔悟。",
    "X88n1641_001:0023a21_10": "輿民至家。",
    "X88n1641_001:0023a22_11": "還其田契。",
    "X88n1641_001:0023a22_12": "并與養病之資。",
    "X88n1641_001:0023a22_13": "民感泣即吐出一蛇。",
    "X88n1641_001:0023a22_14": "霍然起走還家(王元建居士親知其事)。",
    "X88n1641_001:0023a24_0": "杭州于行素。",
    "X88n1641_001:0023a24_1": "妻重病三載有餘。",
    "X88n1641_001:0023a24_2": "勢在必死。",
    "X88n1641_001:0023a24_3": "一夜夢綵雲擁菩薩到其庭。",
    "X88n1641_001:0023b01_4": "歡喜驚醒。",
    "X88n1641_001:0023b01_5": "適值雲棲大師到城。",
    "X88n1641_001:0023b01_6": "于率諸眷屬固求大師光臨。",
    "X88n1641_001:0023b02_7": "師命先作經懺道場四日。",
    "X88n1641_001:0023b03_0": "至末日乃往焉。",
    "X88n1641_001:0023b03_1": "病者恍如夢中所見。",
    "X88n1641_001:0023b03_2": "遂愈。",
    "X88n1641_001:0023b04_0": "天啟初年。",
    "X88n1641_001:0023b04_1": "吳江桑葉大貴。",
    "X88n1641_001:0023b04_2": "有居民養蠶數筐。",
    "X88n1641_001:0023b04_3": "因計成繭所得之利。",
    "X88n1641_001:0023b05_4": "不如賣葉利多。",
    "X88n1641_001:0023b05_5": "遂埋蠶載葉至湖州鬻之。",
    "X88n1641_001:0023b06_6": "舟過太湖。",
    "X88n1641_001:0023b06_7": "有大鯉躍入舟中。",
    "X88n1641_001:0023b06_8": "民取而藏之頭艙。",
    "X88n1641_001:0023b06_9": "既至葉店。",
    "X88n1641_001:0023b07_10": "主人見葉上有血。",
    "X88n1641_001:0023b07_11": "詰問其故。",
    "X88n1641_001:0023b07_12": "答曰此魚血也。",
    "X88n1641_001:0023b08_0": "魚尚在頭艙。",
    "X88n1641_001:0023b08_1": "試取看之。",
    "X88n1641_001:0023b08_2": "則儼然一人頭矣。",
    "X88n1641_001:0023b08_3": "共相驚駭。",
    "X88n1641_001:0023b09_0": "更迫問之。",
    "X88n1641_001:0023b09_1": "答曰。",
    "X88n1641_001:0023b09_2": "實無他故。",
    "X88n1641_001:0023b09_3": "我自埋蠶賣葉。",
    "X88n1641_001:0023b09_4": "欲多取利耳。",
    "X88n1641_001:0023b10_5": "因同眾人至埋蠶處。",
    "X88n1641_001:0023b10_6": "掘地視之。",
    "X88n1641_001:0023b10_7": "復得一死屍。",
    "X88n1641_001:0023b10_8": "與頭相合。",
    "X88n1641_001:0023b11_9": "廼鳴於官。",
    "X88n1641_001:0023b11_10": "竟擬死罪。",
    "X88n1641_001:0023b11_11": "嗟乎。",
    "X88n1641_001:0023b11_12": "業報為蠶。",
    "X88n1641_001:0023b11_13": "不免煑繭之苦。",
    "X88n1641_001:0023b12_14": "亦甚慘矣。",
    "X88n1641_001:0023b12_15": "況為微利而活埋之。",
    "X88n1641_001:0023b12_16": "并使不得盡一期之生。",
    "X88n1641_001:0023b13_17": "人心安在。",
    "X88n1641_001:0023b13_18": "宜其報應之甚速也。",
    "X88n1641_001:0023b14_0": "余母舅金赤城守贑州。",
    "X88n1641_001:0023b14_1": "因入覲歸家。",
    "X88n1641_001:0023b14_2": "夏感瘧症。",
    "X88n1641_001:0023b14_3": "隱几假寐。",
    "X88n1641_001:0023b15_4": "夢公署役人環列其左。",
    "X88n1641_001:0023b15_5": "出家緇流環列其右。",
    "X88n1641_001:0023b15_6": "復一老人語曰。",
    "X88n1641_001:0023b16_7": "若本從出家中來。",
    "X88n1641_001:0023b16_8": "今能回頭仍向此道乎。",
    "X88n1641_001:0023b17_9": "能則尚可送汝老母。",
    "X88n1641_001:0023b17_10": "不能則老母反送汝矣。",
    "X88n1641_001:0023b17_11": "舅因思。",
    "X88n1641_001:0023b18_12": "吾母已年八十有四。",
    "X88n1641_001:0023b18_13": "豈當反令其送我耶。",
    "X88n1641_001:0023b18_14": "即應聲曰。",
    "X88n1641_001:0023b19_15": "我當回頭。",
    "X88n1641_001:0023b19_16": "聲未訖。",
    "X88n1641_001:0023b19_17": "役人遂散。",
    "X88n1641_001:0023b19_18": "乃隨緇眾梵唄而行。",
    "X88n1641_001:0023b20_0": "忽動孤寂之感。",
    "X88n1641_001:0023b20_1": "悲悔而醒。",
    "X88n1641_001:0023b20_2": "異時在陽山墓廬。",
    "X88n1641_001:0023b20_3": "為余言之。",
    "X88n1641_001:0023b21_4": "但以宦情甚熱。",
    "X88n1641_001:0023b21_5": "仍蒞贑州。",
    "X88n1641_001:0023b21_6": "未幾陞兖東兵道。",
    "X88n1641_001:0023b21_7": "歸家病三四日而卒。",
    "X88n1641_001:0023b22_8": "竟使八旬餘之老母淚眼欲枯。",
    "X88n1641_001:0023b22_9": "嗚呼。",
    "X88n1641_001:0023b23_0": "蠅頭蝸角。",
    "X88n1641_001:0023b23_1": "迷人心志如此。",
    "X88n1641_001:0023b23_2": "世出世法。",
    "X88n1641_001:0023b23_3": "兩皆負墮。",
    "X88n1641_001:0023b23_4": "亦可為青雲路上人作永鑒也。",
    "X88n1641_001:0023c01_0": "姑蘇南濠街有一人。",
    "X88n1641_001:0023c01_1": "常作陰隷。",
    "X88n1641_001:0023c01_2": "每數日輒往直班。",
    "X88n1641_001:0023c01_3": "鄰有一人語曰。",
    "X88n1641_001:0023c02_4": "能帶我至陰間遊戲乎。",
    "X88n1641_001:0023c02_5": "隷曰。",
    "X88n1641_001:0023c02_6": "可。",
    "X88n1641_001:0023c02_7": "汝但靜臥室中。",
    "X88n1641_001:0023c03_8": "勅家人勿開戶。",
    "X88n1641_001:0023c03_9": "我當帶汝去。",
    "X88n1641_001:0023c03_10": "仍送汝回。",
    "X88n1641_001:0023c03_11": "隣人如命臥室中。",
    "X88n1641_001:0023c04_12": "隷即攝其魂同至府城隍廟前。",
    "X88n1641_001:0023c04_13": "囑令住石牌樓下相待。",
    "X88n1641_001:0023c05_14": "自乃持文書入中庭去。",
    "X88n1641_001:0023c05_15": "鄰人待久生厭倦心。",
    "X88n1641_001:0023c06_16": "見一大車從西過東。",
    "X88n1641_001:0023c06_17": "載四娼女并二男子。",
    "X88n1641_001:0023c06_18": "中一娼女原有舊情。",
    "X88n1641_001:0023c07_19": "以手招之遂登車同去。",
    "X88n1641_001:0023c07_20": "隷出廟覓鄰人不見。",
    "X88n1641_001:0023c08_21": "轉問旁人。",
    "X88n1641_001:0023c08_22": "知登車去。",
    "X88n1641_001:0023c08_23": "乃回陽急至傅門外一居民。",
    "X88n1641_001:0023c09_24": "家見有新產小猪七頭。",
    "X88n1641_001:0023c09_25": "其一即鄰人也。",
    "X88n1641_001:0023c09_26": "以手擲之。",
    "X88n1641_001:0023c10_27": "猪斃而魂忽不見。",
    "X88n1641_001:0023c10_28": "次於田岸見大赤蛇仰臥。",
    "X88n1641_001:0023c10_29": "即知鄰人所變。",
    "X88n1641_001:0023c11_30": "乃打殺之。",
    "X88n1641_001:0023c11_31": "揑其魂歸房。",
    "X88n1641_001:0023c11_32": "擲醒因問曰。",
    "X88n1641_001:0023c11_33": "汝同我遊陰府頗適意乎。",
    "X88n1641_001:0023c12_34": "答曰。",
    "X88n1641_001:0023c12_35": "汝初置我於廟前石牌樓下。",
    "X88n1641_001:0023c13_36": "入廟經久不出。",
    "X88n1641_001:0023c13_37": "我方厭倦。",
    "X88n1641_001:0023c13_38": "幸舊識娼女邀我出傅門外。",
    "X88n1641_001:0023c14_39": "同至一舍相與飲食歡樂。",
    "X88n1641_001:0023c14_40": "忽有人奪我食。",
    "X88n1641_001:0023c14_41": "打我項。",
    "X88n1641_001:0023c15_42": "我怒而出。",
    "X88n1641_001:0023c15_43": "外困而偃息。",
    "X88n1641_001:0023c15_44": "復聞人呼曰。",
    "X88n1641_001:0023c15_45": "赤蛇赤蛇。",
    "X88n1641_001:0023c16_0": "以手攫我。",
    "X88n1641_001:0023c16_1": "我便驚醒。",
    "X88n1641_001:0023c16_2": "有何樂乎。",
    "X88n1641_001:0023c16_3": "隸笑語其故。",
    "X88n1641_001:0023c16_4": "黃洪江親聞其事。",
    "X88n1641_001:0023c17_5": "乃發心學道(洪江亦予在家時善友)。",
    "X88n1641_001:0023c18_0": "泉州莊奇顯。",
    "X88n1641_001:0023c18_1": "癸丑科榜眼。",
    "X88n1641_001:0023c18_2": "年少嗜酒。",
    "X88n1641_001:0023c18_3": "忽一日飲於承天寺。",
    "X88n1641_001:0023c19_4": "醉後往藏經所。",
    "X88n1641_001:0023c19_5": "見有法師講大佛頂經。",
    "X88n1641_001:0023c19_6": "遂大怒取案上經擲地。",
    "X88n1641_001:0023c20_7": "以脚踏之。",
    "X88n1641_001:0023c20_8": "又仆韋馱像於地。",
    "X88n1641_001:0023c20_9": "後數月以脚踢一廝。",
    "X88n1641_001:0023c21_10": "誤中柱上。",
    "X88n1641_001:0023c21_11": "脚指破裂成異瘡。",
    "X88n1641_001:0023c21_12": "漸腫至身。",
    "X88n1641_001:0023c22_0": "楚痛異常。",
    "X88n1641_001:0023c22_1": "見韋駄詰責而死。",
    "X88n1641_001:0023c23_0": "泉州張翰冲。",
    "X88n1641_001:0023c23_1": "丙辰進士也。",
    "X88n1641_001:0023c23_2": "任金壇知縣。",
    "X88n1641_001:0023c23_3": "將行取一日坐堂。",
    "X88n1641_001:0023c24_4": "忽有緇流徑詣公堂語曰。",
    "X88n1641_001:0023c24_5": "我與汝前生道友。",
    "X88n1641_001:0023c24_6": "見汝有難。",
    "X88n1641_001:0024a01_7": "特來救汝。",
    "X88n1641_001:0024a01_8": "汝可罷官同入山學道。",
    "X88n1641_001:0024a01_9": "不唯免難且出生死。",
    "X88n1641_001:0024a02_10": "張以為誕。",
    "X88n1641_001:0024a02_11": "緇遂歷指其少時事數種。",
    "X88n1641_001:0024a02_12": "皆妻拏所不知者。",
    "X88n1641_001:0024a03_13": "張乃駭諤。",
    "X88n1641_001:0024a03_14": "欲如其言。",
    "X88n1641_001:0024a03_15": "竟為妻子所阻。",
    "X88n1641_001:0024a03_16": "緇尋別去。",
    "X88n1641_001:0024a04_17": "張赴京考選。",
    "X88n1641_001:0024a04_18": "甫至都門。",
    "X88n1641_001:0024a04_19": "脚忽生異癰。",
    "X88n1641_001:0024a04_20": "著靴不能脫。",
    "X88n1641_001:0024a05_21": "割靴調理。",
    "X88n1641_001:0024a05_22": "不愈而死。",
    "X88n1641_001:0024a06_0": "晉江許兆馨。",
    "X88n1641_001:0024a06_1": "戊午舉人。",
    "X88n1641_001:0024a06_2": "往福寧州謁本房座師。",
    "X88n1641_001:0024a06_3": "偶過尼菴。",
    "X88n1641_001:0024a07_4": "悅一少尼。",
    "X88n1641_001:0024a07_5": "遂以官勢脅之強汙焉。",
    "X88n1641_001:0024a07_6": "次日忽自嚙舌兩斷而死。",
    "X88n1641_001:0024a09_0": "晉江王某。",
    "X88n1641_001:0024a09_1": "以文名諸生間。",
    "X88n1641_001:0024a09_2": "擕酒飲承天寺。",
    "X88n1641_001:0024a09_3": "入藏經堂。",
    "X88n1641_001:0024a10_0": "見少年沙彌某端坐閱經。",
    "X88n1641_001:0024a10_1": "強令飲酒。",
    "X88n1641_001:0024a10_2": "沙彌不從。",
    "X88n1641_001:0024a10_3": "復摟抱調弄之。",
    "X88n1641_001:0024a11_4": "歸家三日。",
    "X88n1641_001:0024a11_5": "忽掌口自罵。",
    "X88n1641_001:0024a11_6": "家人不知所謂。",
    "X88n1641_001:0024a11_7": "半日嚙舌而死。",
    "X88n1641_001:0024a13_0": "孝豐縣監生楊龔。",
    "X88n1641_001:0024a13_1": "所買鳥銃八把。",
    "X88n1641_001:0024a13_2": "養獵狗數隻。",
    "X88n1641_001:0024a13_3": "隨處損傷物命。",
    "X88n1641_001:0024a14_4": "一日欲往庄取稻。",
    "X88n1641_001:0024a14_5": "合家人俱得夢云。",
    "X88n1641_001:0024a14_6": "十年造業。",
    "X88n1641_001:0024a15_7": "惡報至矣。",
    "X88n1641_001:0024a15_8": "楊不信。",
    "X88n1641_001:0024a15_9": "復帶銃到庄。",
    "X88n1641_001:0024a15_10": "見野雞。",
    "X88n1641_001:0024a15_11": "以銃打之。",
    "X88n1641_001:0024a16_12": "誤中己頭。",
    "X88n1641_001:0024a16_13": "破腦而死。",
    "X88n1641_001:0024a17_0": "泉州徐氏女。",
    "X88n1641_001:0024a17_1": "名三姐。",
    "X88n1641_001:0024a17_2": "年十六未嫁。",
    "X88n1641_001:0024a17_3": "忽得病。",
    "X88n1641_001:0024a17_4": "父母為覓醫。",
    "X88n1641_001:0024a18_5": "女垂淚告父母曰。",
    "X88n1641_001:0024a18_6": "吾必死。",
    "X88n1641_001:0024a18_7": "無用醫矣。",
    "X88n1641_001:0024a18_8": "蓋吾前生為某家婦。",
    "X88n1641_001:0024a19_9": "夫寵一婢。",
    "X88n1641_001:0024a19_10": "吾以妬故謀殺之。",
    "X88n1641_001:0024a19_11": "今在冥官處訴。",
    "X88n1641_001:0024a20_0": "我當往償之。",
    "X88n1641_001:0024a20_1": "不得逭也。",
    "X88n1641_001:0024a20_2": "翼日遂死。",
    "X88n1641_001:0024a21_0": "泉州徐氏女。",
    "X88n1641_001:0024a21_1": "名悌姐。",
    "X88n1641_001:0024a21_2": "嫁後生數子。",
    "X88n1641_001:0024a21_3": "產中多食鷄。",
    "X88n1641_001:0024a21_4": "所殺鷄頗眾。",
    "X88n1641_001:0024a22_5": "後仍於產時得病。",
    "X88n1641_001:0024a22_6": "見羣鷄索命而死。",
    "X88n1641_001:0024a23_0": "晉江姚某。",
    "X88n1641_001:0024a23_1": "其表兄徐肖浯。",
    "X88n1641_001:0024a23_2": "因年荒捐百金賑饑。",
    "X88n1641_001:0024a23_3": "托姚經理其事。",
    "X88n1641_001:0024a24_4": "姚匿十數金肥己。",
    "X88n1641_001:0024a24_5": "後數日得病。",
    "X88n1641_001:0024a24_6": "自罵曰。",
    "X88n1641_001:0024a24_7": "徐托汝賑饑。",
    "X88n1641_001:0024b01_8": "安得侵匿。",
    "X88n1641_001:0024b01_9": "致餓死者不少。",
    "X88n1641_001:0024b01_10": "今取汝償命。",
    "X88n1641_001:0024b01_11": "遂斃。",
    "X88n1641_001:0024b02_12": "後二子亦皆餓死。",
    "X88n1641_001:0024b03_0": "泉州徐氏女。",
    "X88n1641_001:0024b03_1": "名細嬰。",
    "X88n1641_001:0024b03_2": "年七歲。",
    "X88n1641_001:0024b03_3": "得疳積病埀死。",
    "X88n1641_001:0024b03_4": "其父雨海為鳴磬高聲念佛送之。",
    "X88n1641_001:0024b04_5": "息已絕。",
    "X88n1641_001:0024b04_6": "忽再甦。",
    "X88n1641_001:0024b04_7": "因為延尼僧誦金剛般若經百二十卷。",
    "X88n1641_001:0024b05_8": "女安隱若無病者。",
    "X88n1641_001:0024b05_9": "舉家皆謂病愈。",
    "X88n1641_001:0024b06_10": "女獨向父曰。",
    "X88n1641_001:0024b06_11": "兒暫假數日。",
    "X88n1641_001:0024b06_12": "聽經完去耳。",
    "X88n1641_001:0024b06_13": "經完乃逝。",
    "X88n1641_001:0024b08_0": "泉州有賴姓者。",
    "X88n1641_001:0024b08_1": "家巨富。",
    "X88n1641_001:0024b08_2": "喜害生命。",
    "X88n1641_001:0024b08_3": "家中開一小池。",
    "X88n1641_001:0024b08_4": "以鐵網羅其上下。",
    "X88n1641_001:0024b09_5": "養鰍鱔魚鼈之類。",
    "X88n1641_001:0024b09_6": "用供不時飲食。",
    "X88n1641_001:0024b09_7": "後得病將死。",
    "X88n1641_001:0024b10_8": "諸子羅列牀前。",
    "X88n1641_001:0024b10_9": "賴忽不見。",
    "X88n1641_001:0024b10_10": "徧索不得。",
    "X88n1641_001:0024b10_11": "乃見在小池鐵網中。",
    "X88n1641_001:0024b11_12": "則已死矣。",
    "X88n1641_001:0024b12_0": "晉江有一無賴。",
    "X88n1641_001:0024b12_1": "忘其名。",
    "X88n1641_001:0024b12_2": "恒以殺狗為業。",
    "X88n1641_001:0024b12_3": "在興泉道街門邊溝側屠狗無數。",
    "X88n1641_001:0024b13_4": "忽一日自伏溝側作狗鳴。",
    "X88n1641_001:0024b13_5": "數日乃斃。",
    "X88n1641_001:0024b15_0": "神宗時有一南道名王萬祚。",
    "X88n1641_001:0024b15_1": "管下巡江。",
    "X88n1641_001:0024b15_2": "居官最清廉。",
    "X88n1641_001:0024b16_0": "而性頗嚴急。",
    "X88n1641_001:0024b16_1": "捶楚之下傷命良多。",
    "X88n1641_001:0024b16_2": "忽得病。",
    "X88n1641_001:0024b16_3": "衙中冤鬼數百前後呼叫。",
    "X88n1641_001:0024b17_4": "同僚諸御史往問之。",
    "X88n1641_001:0024b17_5": "無不見聞者。",
    "X88n1641_001:0024b17_6": "五皷。",
    "X88n1641_001:0024b18_7": "王竟不起。",
    "X88n1641_001:0024b19_0": "南安縣山間有居民。",
    "X88n1641_001:0024b19_1": "夜起見鄰舍有一人驅一人入其門。",
    "X88n1641_001:0024b20_2": "其人不肯入。",
    "X88n1641_001:0024b20_3": "且曰。",
    "X88n1641_001:0024b20_4": "吾僅欠渠銀三分。",
    "X88n1641_001:0024b20_5": "何得便入。",
    "X88n1641_001:0024b21_0": "驅者以杖打之。",
    "X88n1641_001:0024b21_1": "遂入。",
    "X88n1641_001:0024b21_2": "居民頗以為怪。",
    "X88n1641_001:0024b21_3": "明早詢之。",
    "X88n1641_001:0024b21_4": "則鄰舍已生一猪。",
    "X88n1641_001:0024b22_5": "民復疑猪所直不止三分。",
    "X88n1641_001:0024b22_6": "未幾猪墮圊死。",
    "X88n1641_001:0024b23_7": "竟有一人以三分銀買之。",
    "X88n1641_001:0024b23_8": "民疑乃解。",
    "X88n1641_001:0024b24_0": "孝豐靈巖寺釋自謙。",
    "X88n1641_001:0024b24_1": "未出家時有友勞振宇。",
    "X88n1641_001:0024b24_2": "係江右人。",
    "X88n1641_001:0024c01_3": "在遞舖灘賣鱔麵。",
    "X88n1641_001:0024c01_4": "歲殺鱔數千斤。",
    "X88n1641_001:0024c01_5": "後移居德清縣。",
    "X88n1641_001:0024c02_0": "仍習前業。",
    "X88n1641_001:0024c02_1": "一日以滾湯煑鱔。",
    "X88n1641_001:0024c02_2": "若有人執其手。",
    "X88n1641_001:0024c02_3": "不能蓋鍋。",
    "X88n1641_001:0024c03_4": "羣鱔帶沸湯跳起。",
    "X88n1641_001:0024c03_5": "攢頭匝面咬定不放。",
    "X88n1641_001:0024c03_6": "振宇號慟萬狀。",
    "X88n1641_001:0024c04_7": "須臾鱔死方脫。",
    "X88n1641_001:0024c04_8": "不十日。",
    "X88n1641_001:0024c04_9": "振宇尋死。",
    "X88n1641_001:0024c05_0": "釋性戒。",
    "X88n1641_001:0024c05_1": "俗姓萬。",
    "X88n1641_001:0024c05_2": "有弟萬七。",
    "X88n1641_001:0024c05_3": "不事他業。",
    "X88n1641_001:0024c05_4": "專用繩索弔諸鳥雀及狐狸兔犬之類。",
    "X88n1641_001:0024c06_5": "屢勸改業不從。",
    "X88n1641_001:0024c06_6": "凡十餘年。",
    "X88n1641_001:0024c06_7": "後一夜臥牀上以朽繩自纏頸。",
    "X88n1641_001:0024c07_8": "人莫知之。",
    "X88n1641_001:0024c07_9": "次早不起。",
    "X88n1641_001:0024c07_10": "方啟戶視之。",
    "X88n1641_001:0024c08_11": "已自斃矣。",
    "X88n1641_001:0024c09_0": "神宗時應天巡撫周孔教。",
    "X88n1641_001:0024c09_1": "以新陞侍郎過家中。",
    "X88n1641_001:0024c09_2": "有屬官數人。",
    "X88n1641_001:0024c10_3": "皆修書差隷往謝舉薦。",
    "X88n1641_001:0024c10_4": "隷在其門候未得。",
    "X88n1641_001:0024c10_5": "即通。",
    "X88n1641_001:0024c11_6": "忽見一承差持單。",
    "X88n1641_001:0024c11_7": "紅帖有侍生石星拜五字。",
    "X88n1641_001:0024c11_8": "門者急為傳進。",
    "X88n1641_001:0024c12_9": "周方晏坐。",
    "X88n1641_001:0024c12_10": "見之大驚。",
    "X88n1641_001:0024c12_11": "已而帖及承差俱不見。",
    "X88n1641_001:0024c13_12": "周遂病劇。",
    "X88n1641_001:0024c13_13": "子孫環立。",
    "X88n1641_001:0024c13_14": "又見白布包首者三十餘人。",
    "X88n1641_001:0024c14_0": "突入臥室訶之。",
    "X88n1641_001:0024c14_1": "則各以手持己頭。",
    "X88n1641_001:0024c14_2": "示人蓋斷頭鬼也。",
    "X88n1641_001:0024c15_0": "周遂卒。",
    "X88n1641_001:0024c15_1": "考其故。",
    "X88n1641_001:0024c15_2": "石向為兵部尚書時。",
    "X88n1641_001:0024c15_3": "周為御史。",
    "X88n1641_001:0024c15_4": "劾之下獄論死。",
    "X88n1641_001:0024c16_5": "而三十餘人。",
    "X88n1641_001:0024c16_6": "皆周為巡撫時以賊情誤殺者也。",
    "X88n1641_001:0024c18_0": "台州府松門衛有一居民。",
    "X88n1641_001:0024c18_1": "於崇禎辛未年五月盜檀香大士像一軀。",
    "X88n1641_001:0024c19_2": "至天台縣欲售於鄉紳張大素。",
    "X88n1641_001:0024c19_3": "張許價六金。",
    "X88n1641_001:0024c20_4": "民嫌其少。",
    "X88n1641_001:0024c20_5": "遂欲劈像作香鬻之。",
    "X88n1641_001:0024c20_6": "時一皂役先一夜得夢女人稱苦求救。",
    "X88n1641_001:0024c21_7": "彼正妻死未久。",
    "X88n1641_001:0024c21_8": "疑是索薦。",
    "X88n1641_001:0024c22_0": "乃往西門店中買祭物。",
    "X88n1641_001:0024c22_1": "忽聞店內劈像聲。",
    "X88n1641_001:0024c22_2": "急趨入視之。",
    "X88n1641_001:0024c23_3": "恍悟前夢。",
    "X88n1641_001:0024c23_4": "因扭解至捕官所。",
    "X88n1641_001:0024c23_5": "其房亦於先一夜得夢。",
    "X88n1641_001:0024c24_6": "遂苦鞫之。",
    "X88n1641_001:0024c24_7": "自首從松門盜來。",
    "X88n1641_001:0024c24_8": "即申之縣令。",
    "X88n1641_001:0024c24_9": "以像歸張宅修理供養。",
    "X88n1641_001:0025a01_10": "其人未幾死於獄中。",
    "X88n1641_001:0025a02_0": "高明寺沙彌岳弘。",
    "X88n1641_001:0025a02_1": "管庫事。",
    "X88n1641_001:0025a02_2": "侵尅大眾無所不至。",
    "X88n1641_001:0025a02_3": "每於庫中私造飲食。",
    "X88n1641_001:0025a03_4": "偏眾獨享。",
    "X88n1641_001:0025a03_5": "并偷常住豆米等以供己用。",
    "X88n1641_001:0025a04_6": "甫及一年。",
    "X88n1641_001:0025a04_7": "於元旦夜夢關帝割其舌去。",
    "X88n1641_001:0025a04_8": "至初四即大病濵死。",
    "X88n1641_001:0025a05_9": "乃惶怖無地。",
    "X88n1641_001:0025a05_10": "盡賣衣單求眾懺悔。",
    "X88n1641_001:0025a05_11": "告辭庫司。",
    "X88n1641_001:0025a06_12": "病始漸愈。",
    "X88n1641_001:0025a07_0": "高明寺又一沙彌靈灝。",
    "X88n1641_001:0025a07_1": "素不持戒。",
    "X88n1641_001:0025a07_2": "有瑞光上座率清眾各出己資。",
    "X88n1641_001:0025a08_3": "結大悲懺期。",
    "X88n1641_001:0025a08_4": "灝亦預焉。",
    "X88n1641_001:0025a08_5": "正在期中。",
    "X88n1641_001:0025a08_6": "仍私行不軌。",
    "X88n1641_001:0025a09_7": "遂夢關帝截其首去。",
    "X88n1641_001:0025a09_8": "次日即嘔血不已。",
    "X88n1641_001:0025a09_9": "重病數月而死。",
    "X88n1641_001:0025a11_0": "佛日寺釋實相。",
    "X88n1641_001:0025a11_1": "中年出家。",
    "X88n1641_001:0025a11_2": "惟勤修苦行。",
    "X88n1641_001:0025a11_3": "炤管常住為事。",
    "X88n1641_001:0025a12_4": "隨作務隨念佛。",
    "X88n1641_001:0025a12_5": "所得即施不留餘貲。",
    "X88n1641_001:0025a12_6": "不與人諍亦無怒容。",
    "X88n1641_001:0025a13_7": "壬申秋忽一日語人曰。",
    "X88n1641_001:0025a13_8": "吾明日當西逝。",
    "X88n1641_001:0025a13_9": "乃借雲棲一老人坐龕。",
    "X88n1641_001:0025a14_10": "次日洗浴剃髮髮未竟。",
    "X88n1641_001:0025a14_11": "已坐脫矣。",
    "X88n1641_001:0025a15_0": "安吉州龍溪菴釋了空。",
    "X88n1641_001:0025a15_1": "延覺海法主講法華經。",
    "X88n1641_001:0025a15_2": "因迎送之禮殷重。",
    "X88n1641_001:0025a16_3": "里人妬之。",
    "X88n1641_001:0025a16_4": "誘一無賴莫姓者。",
    "X88n1641_001:0025a16_5": "打法主一拳。",
    "X88n1641_001:0025a17_6": "眾僧忿甚熟打。",
    "X88n1641_001:0025a17_7": "莫濵絕。",
    "X88n1641_001:0025a17_8": "里人乘機欲詐菴中。",
    "X88n1641_001:0025a17_9": "鳴官看驗。",
    "X88n1641_001:0025a18_10": "身無小傷需食更甚。",
    "X88n1641_001:0025a18_11": "官遂不能擬罪。",
    "X88n1641_001:0025a18_12": "逮輿歸俗舍則徧身皆損。",
    "X88n1641_001:0025a19_13": "飲食俱廢。",
    "X88n1641_001:0025a19_14": "半年後脇下尚流膿血。",
    "X88n1641_001:0025a19_15": "久久方愈。",
    "X88n1641_001:0025a20_16": "信伽藍護法之力不可思議云。",
    "X88n1641_001:0025a20_17": "癸酉春日過菴中。",
    "X88n1641_001:0025a21_18": "釋隱空親說。",
    "X88n1641_001:0025a22_0": "世廟時吳城鄉紳陸俸。",
    "X88n1641_001:0025a22_1": "貪洞庭山西湖寺風水之勝。",
    "X88n1641_001:0025a23_0": "力謀吞噬。",
    "X88n1641_001:0025a23_1": "因本山鄒陸二氏極相抗訟。",
    "X88n1641_001:0025a23_2": "不遂厥志。",
    "X88n1641_001:0025a23_3": "乃放火焚殿。",
    "X88n1641_001:0025a24_4": "殿有古沉香觀音像。",
    "X88n1641_001:0025a24_5": "焚時香氣遠徹。",
    "X88n1641_001:0025a24_6": "後俸得奇疾。",
    "X88n1641_001:0025b01_7": "渾身癢發。",
    "X88n1641_001:0025b01_8": "滾水灌之。",
    "X88n1641_001:0025b01_9": "次第爛盡乃斃。",
    "X88n1641_001:0025b01_10": "同謀諸人並感惡報。",
    "X88n1641_001:0025b03_0": "神廟時吳城鄉紳毛堪。",
    "X88n1641_001:0025b03_1": "侵天池寺作墓。",
    "X88n1641_001:0025b03_2": "將毀石佛殿為穴。",
    "X88n1641_001:0025b04_3": "天正晴朗。",
    "X88n1641_001:0025b04_4": "忽發厲雷。",
    "X88n1641_001:0025b04_5": "擊碎牌樓。",
    "X88n1641_001:0025b04_6": "堪懼因不毀此殿。",
    "X88n1641_001:0025b05_7": "留一二香火僧居之。",
    "X88n1641_001:0025b05_8": "然大剎已廢。",
    "X88n1641_001:0025b05_9": "其年。",
    "X88n1641_001:0025b05_10": "子女孫媳等俱死。",
    "X88n1641_001:0025b06_11": "後竟絕嗣。",
    "X88n1641_001:0025b07_0": "楓橋有一豪民。",
    "X88n1641_001:0025b07_1": "素行無賴。",
    "X88n1641_001:0025b07_2": "恐被按院訪察。",
    "X88n1641_001:0025b07_3": "乃詐現善相。",
    "X88n1641_001:0025b08_4": "持珠念佛。",
    "X88n1641_001:0025b08_5": "戒酒斷牌。",
    "X88n1641_001:0025b08_6": "諸惡黨亦翕然從化。",
    "X88n1641_001:0025b08_7": "稱之為師。",
    "X88n1641_001:0025b09_8": "而實私行非法。",
    "X88n1641_001:0025b09_9": "仍造眾惡。",
    "X88n1641_001:0025b09_10": "但所言禍福皆悉靈驗。",
    "X88n1641_001:0025b10_0": "利養日盛。",
    "X88n1641_001:0025b10_1": "如此年餘。",
    "X88n1641_001:0025b10_2": "忽自思曰。",
    "X88n1641_001:0025b10_3": "我本無真心修行。",
    "X88n1641_001:0025b10_4": "尚感此善報。",
    "X88n1641_001:0025b11_5": "信是佛法不虗。",
    "X88n1641_001:0025b11_6": "因發真心。",
    "X88n1641_001:0025b11_7": "覓一好師。",
    "X88n1641_001:0025b11_8": "受三歸五戒。",
    "X88n1641_001:0025b12_9": "是後所言禍福百無一驗。",
    "X88n1641_001:0025b12_10": "利養遂絕。",
    "X88n1641_001:0025b12_11": "出怨聲曰。",
    "X88n1641_001:0025b13_12": "我向以詐偽修行。",
    "X88n1641_001:0025b13_13": "反多利養。",
    "X88n1641_001:0025b13_14": "今真心學道。",
    "X88n1641_001:0025b13_15": "更見坎坷。",
    "X88n1641_001:0025b14_16": "佛法豈有實效哉。",
    "X88n1641_001:0025b14_17": "悶而假寐見。",
    "X88n1641_001:0025b14_18": "有人告之曰。",
    "X88n1641_001:0025b14_19": "汝莫怪我。",
    "X88n1641_001:0025b15_20": "汝向來詐偽虗誑妄談禍福。",
    "X88n1641_001:0025b15_21": "我輩得以互相佐助。",
    "X88n1641_001:0025b16_22": "今汝返邪歸正。",
    "X88n1641_001:0025b16_23": "我輩不復能相親近。",
    "X88n1641_001:0025b16_24": "故令汝無聊耳。",
    "X88n1641_001:0025b18_0": "釋慈含與六湛遊野池畔。",
    "X88n1641_001:0025b18_1": "見二水蛭。",
    "X88n1641_001:0025b18_2": "次第變作青蜓。",
    "X88n1641_001:0025b19_0": "至第三水蛭出。",
    "X88n1641_001:0025b19_1": "六湛以草阻之。",
    "X88n1641_001:0025b19_2": "連阻三次。",
    "X88n1641_001:0025b19_3": "忽變作蜈蚣。",
    "X88n1641_001:0025b21_0": "吳城陸湛源居士。",
    "X88n1641_001:0025b21_1": "至洞庭東山吳鳳林家。",
    "X88n1641_001:0025b21_2": "其家為營素供。",
    "X88n1641_001:0025b22_3": "吳母時年九十四歲。",
    "X88n1641_001:0025b22_4": "偶至厨下因問。",
    "X88n1641_001:0025b22_5": "為何營此素供。",
    "X88n1641_001:0025b23_6": "婢云請陸相公。",
    "X88n1641_001:0025b23_7": "又問陸相公年幾何。",
    "X88n1641_001:0025b23_8": "婢云年五十四。",
    "X88n1641_001:0025b24_9": "母驚歎曰。",
    "X88n1641_001:0025b24_10": "渠年五十四便已茹素。",
    "X88n1641_001:0025b24_11": "吾年九十四乃不斷腪耶。",
    "X88n1641_001:0025c01_12": "從今日即當永斷。",
    "X88n1641_001:0025c01_13": "子媳輩力阻之。",
    "X88n1641_001:0025c01_14": "俱不聽。",
    "X88n1641_001:0025c02_15": "仍設香燭請陸居士作證。",
    "X88n1641_001:0025c02_16": "越三年於臘月間。",
    "X88n1641_001:0025c02_17": "忽謂子曰。",
    "X88n1641_001:0025c03_18": "為我請陸先生來。",
    "X88n1641_001:0025c03_19": "子訝。",
    "X88n1641_001:0025c03_20": "問其故。",
    "X88n1641_001:0025c03_21": "答曰。",
    "X88n1641_001:0025c03_22": "吾將遠行。",
    "X88n1641_001:0025c04_0": "子問何往。",
    "X88n1641_001:0025c04_1": "答曰。",
    "X88n1641_001:0025c04_2": "兒何太癡。",
    "X88n1641_001:0025c04_3": "吾已九十七歲。",
    "X88n1641_001:0025c04_4": "安得無去。",
    "X88n1641_001:0025c05_0": "遂徧集子孫輩言別。",
    "X88n1641_001:0025c05_1": "擇次日去。",
    "X88n1641_001:0025c05_2": "次日大雪。",
    "X88n1641_001:0025c05_3": "則云且俟天好方去。",
    "X88n1641_001:0025c06_4": "次日又問天好否。",
    "X88n1641_001:0025c06_5": "婢謬答云今日雪更甚。",
    "X88n1641_001:0025c07_0": "則云更俟天晴。",
    "X88n1641_001:0025c07_1": "未幾見日光炤室。",
    "X88n1641_001:0025c07_2": "乃曰。",
    "X88n1641_001:0025c07_3": "汝等詒我。",
    "X88n1641_001:0025c07_4": "速取我淨衣及取香水來。",
    "X88n1641_001:0025c08_5": "遂起梳洗更衣禮佛。",
    "X88n1641_001:0025c08_6": "并遙禮湛源居士。",
    "X88n1641_001:0025c09_7": "馮几端坐。",
    "X88n1641_001:0025c09_8": "命眷屬同時輕聲念佛以送之。",
    "X88n1641_001:0025c10_0": "許久媳進茶湯。",
    "X88n1641_001:0025c10_1": "則已逝矣。",
    "X88n1641_001:0025c11_0": "姑蘇神堂巷潘奉巖親家。",
    "X88n1641_001:0025c11_1": "渾名盛老鼠。",
    "X88n1641_001:0025c11_2": "有一外甥居鄉間。",
    "X88n1641_001:0025c12_3": "盛往探之。",
    "X88n1641_001:0025c12_4": "甥欲割鷄為饌。",
    "X88n1641_001:0025c12_5": "力阻乃免。",
    "X88n1641_001:0025c12_6": "夜夢亡媳謝曰。",
    "X88n1641_001:0025c13_7": "雞即我後身也。",
    "X88n1641_001:0025c13_8": "吾因不敬三寶。",
    "X88n1641_001:0025c13_9": "墮此異類。",
    "X88n1641_001:0025c13_10": "賴翁慈力。",
    "X88n1641_001:0025c14_11": "昨免刀砧。",
    "X88n1641_001:0025c14_12": "吾七年前曾失一簪在竹筧內。",
    "X88n1641_001:0025c14_13": "可令姑取之。",
    "X88n1641_001:0025c15_14": "盛既醒。",
    "X88n1641_001:0025c15_15": "遂索此雞歸家。",
    "X88n1641_001:0025c15_16": "果於竹筧中尋得舊簪。",
    "X88n1641_001:0025c16_17": "夫妻皆大感發。",
    "X88n1641_001:0025c16_18": "同出家於普陀山。",
    "X88n1641_001:0025c16_19": "後其妻坐逝。",
    "X88n1641_001:0025c16_20": "夫亦善終。",
    "X88n1641_001:0025c18_0": "姑蘇周致和。",
    "X88n1641_001:0025c18_1": "賣藥為業。",
    "X88n1641_001:0025c18_2": "有一次媳。",
    "X88n1641_001:0025c18_3": "歿後附於妹身言曰。",
    "X88n1641_001:0025c19_4": "吾不敬三寶。",
    "X88n1641_001:0025c19_5": "罰作狗身。",
    "X88n1641_001:0025c19_6": "日被厨下人打。",
    "X88n1641_001:0025c19_7": "苦不可言。",
    "X88n1641_001:0025c20_0": "幸速救我。",
    "X88n1641_001:0025c20_1": "父母問曰。",
    "X88n1641_001:0025c20_2": "吾為汝禮慈悲懺法。",
    "X88n1641_001:0025c20_3": "汝得益否。",
    "X88n1641_001:0025c21_0": "答曰。",
    "X88n1641_001:0025c21_1": "正仗懺力。",
    "X88n1641_001:0025c21_2": "將脫難矣。",
    "X88n1641_001:0025c21_3": "父母乃從周家取狗以歸。",
    "X88n1641_001:0025c22_0": "三日而死。",
    "X88n1641_001:0025c23_0": "姑蘇金龍川有一妻弟。",
    "X88n1641_001:0025c23_1": "於南濠開麵坊。",
    "X88n1641_001:0025c23_2": "家人打驢。",
    "X88n1641_001:0025c23_3": "驢忽作人語。",
    "X88n1641_001:0025c24_4": "吾欠汝老主人五金。",
    "X88n1641_001:0025c24_5": "故來効力。",
    "X88n1641_001:0025c24_6": "汝何得鞭我。",
    "X88n1641_001:0026a01_7": "家人大驚。",
    "X88n1641_001:0026a01_8": "以語厥主。",
    "X88n1641_001:0026a01_9": "主取父舊帳簡之。",
    "X88n1641_001:0026a01_10": "果得五金借票一紙。",
    "X88n1641_001:0026a02_11": "因取向驢前碎之。",
    "X88n1641_001:0026a02_12": "語曰。",
    "X88n1641_001:0026a02_13": "吾已免汝。",
    "X88n1641_001:0026a02_14": "驢遂躑躅而斃。",
    "X88n1641_001:0026a04_0": "金龍川又一表弟。",
    "X88n1641_001:0026a04_1": "住滸墅關。",
    "X88n1641_001:0026a04_2": "生一子常病。",
    "X88n1641_001:0026a04_3": "偶父子同臥頃。",
    "X88n1641_001:0026a05_4": "有鬼攝父魂至冥府。",
    "X88n1641_001:0026a05_5": "冥官責云。",
    "X88n1641_001:0026a05_6": "汝欠某人債若干。",
    "X88n1641_001:0026a06_7": "何久不還。",
    "X88n1641_001:0026a06_8": "父答云。",
    "X88n1641_001:0026a06_9": "我不識渠。",
    "X88n1641_001:0026a06_10": "因喚出相認。",
    "X88n1641_001:0026a06_11": "即其子也。",
    "X88n1641_001:0026a07_12": "遂憶前世曾欠債事。",
    "X88n1641_001:0026a07_13": "冥官命曰。",
    "X88n1641_001:0026a07_14": "汝速於三寶中為渠還却。",
    "X88n1641_001:0026a08_15": "一諾而醒。",
    "X88n1641_001:0026a08_16": "其子宛然在牀。",
    "X88n1641_001:0026a08_17": "心倍醒悟。",
    "X88n1641_001:0026a08_18": "後為作福延醫等事。",
    "X88n1641_001:0026a09_19": "計滿本數。",
    "X88n1641_001:0026a09_20": "子隨去世。",
    "X88n1641_001:0026a09_21": "母慟哭之。",
    "X88n1641_001:0026a09_22": "父曰。",
    "X88n1641_001:0026a09_23": "不須哭也。",
    "X88n1641_001:0026a10_24": "此是索舊債者耳。",
    "X88n1641_001:0026a10_25": "備述前夢。",
    "X88n1641_001:0026a10_26": "因相與奉戒修道。",
    "X88n1641_001:0026a11_27": "至今尚存。",
    "X88n1641_001:0026a12_0": "湖州府武康縣公差。",
    "X88n1641_001:0026a12_1": "忘其名。",
    "X88n1641_001:0026a12_2": "路值一男二女尾其後行。",
    "X88n1641_001:0026a13_3": "到鄉宦駱家。",
    "X88n1641_001:0026a13_4": "見三人直入駱門。",
    "X88n1641_001:0026a13_5": "心異之。",
    "X88n1641_001:0026a13_6": "因待至暮不出。",
    "X88n1641_001:0026a14_7": "遂問守門者索人。",
    "X88n1641_001:0026a14_8": "守門人以為誣妄。",
    "X88n1641_001:0026a14_9": "諍打不已。",
    "X88n1641_001:0026a15_0": "聞於主翁。",
    "X88n1641_001:0026a15_1": "翁悟其意。",
    "X88n1641_001:0026a15_2": "命各房查生產事。",
    "X88n1641_001:0026a15_3": "乃見牸牛新生三牡。",
    "X88n1641_001:0026a16_4": "一壯二牝。",
    "X88n1641_001:0026a16_5": "即喚分差視之。",
    "X88n1641_001:0026a16_6": "三牛毛色與所見三人服色不異。",
    "X88n1641_001:0026a17_7": "方知三人已為牛矣。",
    "X88n1641_001:0026a17_8": "復查其姓名。",
    "X88n1641_001:0026a17_9": "皆欠駱家租米者也。",
    "X88n1641_001:0026a18_10": "後三牛既大。",
    "X88n1641_001:0026a18_11": "力有強弱。",
    "X88n1641_001:0026a18_12": "債多者強。",
    "X88n1641_001:0026a19_0": "債少者弱。",
    "X88n1641_001:0026a19_1": "分毫無爽焉。",
    "X88n1641_001:0026a20_0": "吳城婁門內有姓蔣者。",
    "X88n1641_001:0026a20_1": "自幼喜毀神像。",
    "X88n1641_001:0026a20_2": "崇禎癸酉年拆其父所造火神殿為門房。",
    "X88n1641_001:0026a21_3": "毀神像以為薪然之。",
    "X88n1641_001:0026a21_4": "冬忽頭痛。",
    "X88n1641_001:0026a22_5": "命家人鳴囉集眾。",
    "X88n1641_001:0026a22_6": "眾既集。",
    "X88n1641_001:0026a22_7": "眼珠忽迸出垂於鼻間。",
    "X88n1641_001:0026a23_8": "死而復甦。",
    "X88n1641_001:0026a23_9": "甦而復死。",
    "X88n1641_001:0026a23_10": "口唱冥府所歷諸苦。",
    "X88n1641_001:0026a23_11": "共經四十二日乃絕。",
    "X88n1641_001:0026a24_12": "合城人無不見聞。",
    "X88n1641_001:0026b01_0": "寧國府涇縣水東鄉民。",
    "X88n1641_001:0026b01_1": "忘其姓名。",
    "X88n1641_001:0026b01_2": "居常修善。",
    "X88n1641_001:0026b01_3": "齋僧布施無虗日。",
    "X88n1641_001:0026b02_4": "偶因病暴卒。",
    "X88n1641_001:0026b02_5": "至冥府。",
    "X88n1641_001:0026b02_6": "冥王稽其陽算未盡。",
    "X88n1641_001:0026b03_0": "遣還。",
    "X88n1641_001:0026b03_1": "民乞曰。",
    "X88n1641_001:0026b03_2": "為人多苦。",
    "X88n1641_001:0026b03_3": "不欲更還。",
    "X88n1641_001:0026b03_4": "如是再三。",
    "X88n1641_001:0026b03_5": "王乃問欲作何等。",
    "X88n1641_001:0026b04_6": "答曰願預僧流。",
    "X88n1641_001:0026b04_7": "王驚曰。",
    "X88n1641_001:0026b04_8": "汝福幾何。",
    "X88n1641_001:0026b04_9": "望此高位。",
    "X88n1641_001:0026b05_10": "計汝生平福力。",
    "X88n1641_001:0026b05_11": "祗可作一百戶耳。",
    "X88n1641_001:0026b05_12": "民又固乞。",
    "X88n1641_001:0026b05_13": "設不能為名德沙門。",
    "X88n1641_001:0026b06_14": "求作一燒火僧足矣。",
    "X88n1641_001:0026b06_15": "王曰。",
    "X88n1641_001:0026b06_16": "燒火僧亦萬萬不易作。",
    "X88n1641_001:0026b07_17": "且與汝作一千戶何如。",
    "X88n1641_001:0026b07_18": "民又不欲。",
    "X88n1641_001:0026b07_19": "王曰。",
    "X88n1641_001:0026b08_0": "必欲作燒火僧。",
    "X88n1641_001:0026b08_1": "且回陽間。",
    "X88n1641_001:0026b08_2": "盡其形壽極力修福。",
    "X88n1641_001:0026b08_3": "或可冀耳。",
    "X88n1641_001:0026b09_4": "民遂復甦。",
    "X88n1641_001:0026b09_5": "作福倍前。",
    "X88n1641_001:0026b09_6": "數年乃逝(九華空如老人說)。",
    "X88n1641_001:0026b10_0": "世廟時休邑大傅瀛。",
    "X88n1641_001:0026b10_1": "有童子名程鎡。",
    "X88n1641_001:0026b10_2": "與同族弟兄捉樹上鵓鳩。",
    "X88n1641_001:0026b11_3": "議定上樹者得其二。",
    "X88n1641_001:0026b11_4": "在樹下者得其一。",
    "X88n1641_001:0026b11_5": "及上樹取得三鳩。",
    "X88n1641_001:0026b12_6": "則樹下者皆取去。",
    "X88n1641_001:0026b12_7": "鎡追奪不肯還。",
    "X88n1641_001:0026b12_8": "遂併取擲殺之。",
    "X88n1641_001:0026b13_9": "夜夢二青衣執牌來捉云。",
    "X88n1641_001:0026b13_10": "有人命事。",
    "X88n1641_001:0026b13_11": "鎡避走約二里許。",
    "X88n1641_001:0026b14_12": "竄入觀音大士殿中。",
    "X88n1641_001:0026b14_13": "見大士儼然在焉。",
    "X88n1641_001:0026b15_14": "二青衣亦追至。",
    "X88n1641_001:0026b15_15": "鎡訴於大士曰。",
    "X88n1641_001:0026b15_16": "我未甞殺人。",
    "X88n1641_001:0026b15_17": "何為捉我。",
    "X88n1641_001:0026b16_18": "二青衣出牌示曰。",
    "X88n1641_001:0026b16_19": "是三鵓鳩相告。",
    "X88n1641_001:0026b16_20": "今須同去理會。",
    "X88n1641_001:0026b17_21": "鎡辯曰。",
    "X88n1641_001:0026b17_22": "鵓鳩不過小禽。",
    "X88n1641_001:0026b17_23": "何足償命。",
    "X88n1641_001:0026b17_24": "況我本與彼約。",
    "X88n1641_001:0026b18_0": "彼人負約。",
    "X88n1641_001:0026b18_1": "致我生忿而擲殺之。",
    "X88n1641_001:0026b18_2": "則罪不獨在我也。",
    "X88n1641_001:0026b18_3": "大士曰。",
    "X88n1641_001:0026b19_4": "鵓鳩若大。",
    "X88n1641_001:0026b19_5": "損犯禾苗。",
    "X88n1641_001:0026b19_6": "則汝殺之其罪稍輕。",
    "X88n1641_001:0026b19_7": "今既初生未甞有過。",
    "X88n1641_001:0026b20_8": "汝今殺之理須償命。",
    "X88n1641_001:0026b20_9": "況彼人雖負約。",
    "X88n1641_001:0026b21_0": "而致之死地者實汝罪也。",
    "X88n1641_001:0026b21_1": "但念汝年幼未有成立。",
    "X88n1641_001:0026b21_2": "因命二青衣寬其限至十二年後。",
    "X88n1641_001:0026b22_3": "某日某時再來追之。",
    "X88n1641_001:0026b23_0": "二青衣奉大士命而散。",
    "X88n1641_001:0026b23_1": "鎡亦遂寤。",
    "X88n1641_001:0026b23_2": "至十二年後。",
    "X88n1641_001:0026b23_3": "鎡商於淞江。",
    "X88n1641_001:0026b24_4": "至期忽自立于秀野橋下而斃。",
    "X88n1641_001:0026c01_0": "大傅瀛程玄偉。",
    "X88n1641_001:0026c01_1": "生一子。",
    "X88n1641_001:0026c01_2": "名本大。",
    "X88n1641_001:0026c01_3": "習儒業。",
    "X88n1641_001:0026c01_4": "費其家產略盡。",
    "X88n1641_001:0026c02_5": "于崇禎辛巳同族兄程天明往姑蘇。",
    "X88n1641_001:0026c02_6": "將本處祖屋賣與其姪。",
    "X88n1641_001:0026c03_7": "得價僅數十金。",
    "X88n1641_001:0026c03_8": "俱被天明扣去。",
    "X88n1641_001:0026c03_9": "空手而回。",
    "X88n1641_001:0026c04_0": "不數日遂抱鬱死。",
    "X88n1641_001:0026c04_1": "止存一女已嫁商山吳宅。",
    "X88n1641_001:0026c04_2": "女歸送殮。",
    "X88n1641_001:0026c05_3": "竟于途中見乃父魂。",
    "X88n1641_001:0026c05_4": "因附其身而歸罵曰。",
    "X88n1641_001:0026c05_5": "天明甚無情誼。",
    "X88n1641_001:0026c06_6": "令我抑鬱而死。",
    "X88n1641_001:0026c06_7": "今已訴于冥王。",
    "X88n1641_001:0026c06_8": "兼告鄉約程宗涵作證矣。",
    "X88n1641_001:0026c07_9": "我又于抗州江干遇故姪程寬。",
    "X88n1641_001:0026c07_10": "寄我要打姪婦吳氏十掌云。",
    "X88n1641_001:0026c08_11": "我止有一子。",
    "X88n1641_001:0026c08_12": "汝何不肯撫養。",
    "X88n1641_001:0026c08_13": "乃起異心耶。",
    "X88n1641_001:0026c09_14": "玄偉聞而訶曰。",
    "X88n1641_001:0026c09_15": "汝在生時。",
    "X88n1641_001:0026c09_16": "破吾家事殆盡。",
    "X88n1641_001:0026c10_0": "今既死去。",
    "X88n1641_001:0026c10_1": "何故尚來作祟。",
    "X88n1641_001:0026c10_2": "答曰。",
    "X88n1641_001:0026c10_3": "吾前世本為商人。",
    "X88n1641_001:0026c10_4": "汝為店主。",
    "X88n1641_001:0026c11_5": "見我財寶謀奪我命。",
    "X88n1641_001:0026c11_6": "我今特來索債。",
    "X88n1641_001:0026c11_7": "但因汝任我揮霍。",
    "X88n1641_001:0026c12_8": "頗快我心。",
    "X88n1641_001:0026c12_9": "故恕汝命耳。",
    "X88n1641_001:0026c12_10": "何得以父禮責我哉。",
    "X88n1641_001:0026c14_0": "淞江海口有朱姓者。",
    "X88n1641_001:0026c14_1": "慣收大猪宰殺為業。",
    "X88n1641_001:0026c14_2": "崇禎己卯年正月間。",
    "X88n1641_001:0026c15_3": "至二鼓時偶起登廁。",
    "X88n1641_001:0026c15_4": "聞人語聲。",
    "X88n1641_001:0026c15_5": "疑以為盜。",
    "X88n1641_001:0026c16_0": "執杖隨聲尋去。",
    "X88n1641_001:0026c16_1": "乃在猪欄中作福建人語。",
    "X88n1641_001:0026c16_2": "一云。",
    "X88n1641_001:0026c16_3": "苦哉。",
    "X88n1641_001:0026c17_0": "我明日必當見殺矣。",
    "X88n1641_001:0026c17_1": "一云。",
    "X88n1641_001:0026c17_2": "汝本當作猪七次。",
    "X88n1641_001:0026c17_3": "今已六次。",
    "X88n1641_001:0026c18_4": "苦將脫矣。",
    "X88n1641_001:0026c18_5": "我當作猪五次。",
    "X88n1641_001:0026c18_6": "今方初次。",
    "X88n1641_001:0026c18_7": "是為苦耳。",
    "X88n1641_001:0026c18_8": "其人本解福建鄉語。",
    "X88n1641_001:0026c19_9": "聞之大駭。",
    "X88n1641_001:0026c19_10": "遂棄惡業。",
    "X88n1641_001:0026c20_0": "又一人宰羊為業。",
    "X88n1641_001:0026c20_1": "亦于己卯年正月間至鄉間買四羊牽歸。",
    "X88n1641_001:0026c21_2": "未至家中僅十里許。",
    "X88n1641_001:0026c21_3": "四羊爭躑躅。",
    "X88n1641_001:0026c21_4": "觸倒此人。",
    "X88n1641_001:0026c22_0": "一羊牽其頭。",
    "X88n1641_001:0026c22_1": "一羊按其兩足。",
    "X88n1641_001:0026c22_2": "二羊上其腹極力抵觸致死(已上四事並程智用親見故說)。",
    "X88n1641_001:0026c24_0": "神廟時有一士子。",
    "X88n1641_001:0026c24_1": "弱冠即舉進士。",
    "X88n1641_001:0026c24_2": "座師及同年諸友咸器重之。",
    "X88n1641_001:0027a01_3": "其父待之愈嚴。",
    "X88n1641_001:0027a01_4": "稍不如法輒加笞辱。",
    "X88n1641_001:0027a01_5": "一日有同年公請士飲酒。",
    "X88n1641_001:0027a02_6": "士因父責遲遲乃去。",
    "X88n1641_001:0027a02_7": "兼向同年哭愬此情。",
    "X88n1641_001:0027a03_8": "同年大歎服曰。",
    "X88n1641_001:0027a03_9": "甚矣。",
    "X88n1641_001:0027a03_10": "老年伯之深為年兄也。",
    "X88n1641_001:0027a04_11": "夫弟輩半生苦心。",
    "X88n1641_001:0027a04_12": "僅獲一第。",
    "X88n1641_001:0027a04_13": "而兄年未二十。",
    "X88n1641_001:0027a04_14": "亦遂得第。",
    "X88n1641_001:0027a05_15": "且名聲藉藉反勝弟輩。",
    "X88n1641_001:0027a05_16": "此造化所忌也。",
    "X88n1641_001:0027a05_17": "年伯若不用惡辣鉗錘。",
    "X88n1641_001:0027a06_18": "則兄必恣情任意。",
    "X88n1641_001:0027a06_19": "福壽俱損矣。",
    "X88n1641_001:0027a06_20": "士乃醒悟。",
    "X88n1641_001:0027a07_21": "歸時頓改舊觀。",
    "X88n1641_001:0027a07_22": "父訝問之。",
    "X88n1641_001:0027a07_23": "汝為自解我意能如此改過耶。",
    "X88n1641_001:0027a08_24": "抑誰向汝說破耶。",
    "X88n1641_001:0027a08_25": "士述同年語以對。",
    "X88n1641_001:0027a08_26": "父乃敦請同年。",
    "X88n1641_001:0027a09_27": "公命士禮之為師。",
    "X88n1641_001:0027a09_28": "以受切磋琢磨之益。",
    "X88n1641_001:0027a10_0": "和州有一居民。",
    "X88n1641_001:0027a10_1": "忘其姓。",
    "X88n1641_001:0027a10_2": "養鵝百餘隻。",
    "X88n1641_001:0027a10_3": "偶一日鵝食其親鄰稻穀。",
    "X88n1641_001:0027a11_4": "鄰打殺其鵝至五十餘。",
    "X88n1641_001:0027a11_5": "民婦見之。",
    "X88n1641_001:0027a11_6": "始亦甚怒。",
    "X88n1641_001:0027a12_7": "次深思曰。",
    "X88n1641_001:0027a12_8": "我設欲與成訟。",
    "X88n1641_001:0027a12_9": "力能勝彼。",
    "X88n1641_001:0027a12_10": "但須費數十金。",
    "X88n1641_001:0027a13_11": "計鵝所直不及其半。",
    "X88n1641_001:0027a13_12": "且鵝雖死。",
    "X88n1641_001:0027a13_13": "亦尚可用。",
    "X88n1641_001:0027a13_14": "何必爭此空氣。",
    "X88n1641_001:0027a14_15": "又吾夫今已醉臥。",
    "X88n1641_001:0027a14_16": "設與知之。",
    "X88n1641_001:0027a14_17": "或起敺打。",
    "X88n1641_001:0027a14_18": "尤為不便。",
    "X88n1641_001:0027a15_19": "遂命僮收拾死鵞醃之。",
    "X88n1641_001:0027a15_20": "次早鄰人忽自暴死。",
    "X88n1641_001:0027a15_21": "其夫醉醒。",
    "X88n1641_001:0027a16_22": "歎訝其人無病而卒。",
    "X88n1641_001:0027a16_23": "甚為奇異。",
    "X88n1641_001:0027a16_24": "婦乃以昨事告之。",
    "X88n1641_001:0027a17_25": "夫深感曰。",
    "X88n1641_001:0027a17_26": "設汝昨為我說。",
    "X88n1641_001:0027a17_27": "我乘醉力必敺打之。",
    "X88n1641_001:0027a18_0": "不幾成人命乎。",
    "X88n1641_001:0027a18_1": "乃集親友作證。",
    "X88n1641_001:0027a18_2": "拜謝其婦(已上二事釋成泰說)。",
    "X88n1641_001:0027a19_0": "池州府殷家滙經紀行。",
    "X88n1641_001:0027a19_1": "有一棉花客往鄉收花。",
    "X88n1641_001:0027a19_2": "途遇打狗者負一大犬。",
    "X88n1641_001:0027a20_3": "買歸放生。",
    "X88n1641_001:0027a20_4": "剩食飼之。",
    "X88n1641_001:0027a20_5": "弗離左右。",
    "X88n1641_001:0027a20_6": "一日至丁家洲收花。",
    "X88n1641_001:0027a21_7": "行主人叫舟送之。",
    "X88n1641_001:0027a21_8": "犬亦隨往。",
    "X88n1641_001:0027a21_9": "舟子見客銀多。",
    "X88n1641_001:0027a22_10": "起不良心。",
    "X88n1641_001:0027a22_11": "撐至江邊將客置布袋中。",
    "X88n1641_001:0027a22_12": "結口投水。",
    "X88n1641_001:0027a23_13": "犬遂下水口銜袋結嘶吠不已。",
    "X88n1641_001:0027a23_14": "漁人見而挽出。",
    "X88n1641_001:0027a24_0": "客因得蘇。",
    "X88n1641_001:0027a24_1": "回至行中。",
    "X88n1641_001:0027a24_2": "備言其事。",
    "X88n1641_001:0027a24_3": "行主安慰客心。",
    "X88n1641_001:0027a24_4": "佯為不知。",
    "X88n1641_001:0027b01_5": "往舟子家探問。",
    "X88n1641_001:0027b01_6": "客信且邀舟子到行飲酒。",
    "X88n1641_001:0027b01_7": "乃令客出面詰。",
    "X88n1641_001:0027b02_8": "伏罪奉還原銀。",
    "X88n1641_001:0027b03_0": "九華山有住莊人。",
    "X88n1641_001:0027b03_1": "好殺鹿。",
    "X88n1641_001:0027b03_2": "一日率眾網鹿。",
    "X88n1641_001:0027b03_3": "見有老鹿身斑異色。",
    "X88n1641_001:0027b04_4": "四圍覓之。",
    "X88n1641_001:0027b04_5": "鹿見勢迫竄入莊家。",
    "X88n1641_001:0027b04_6": "眾復趕進。",
    "X88n1641_001:0027b05_0": "鹿跪伏淚下乞命。",
    "X88n1641_001:0027b05_1": "莊人以矛逆刺鹿目。",
    "X88n1641_001:0027b05_2": "鹿未去皮。",
    "X88n1641_001:0027b05_3": "而莊人眼忽先瞎矣。",
    "X88n1641_001:0027b07_0": "青陽縣老田吳六房。",
    "X88n1641_001:0027b07_1": "有家人名吳毛。",
    "X88n1641_001:0027b07_2": "持戒茹素甚潔。",
    "X88n1641_001:0027b08_0": "左兵渡江搶虜殺人。",
    "X88n1641_001:0027b08_1": "主人盡走避之。",
    "X88n1641_001:0027b08_2": "惟吳毛代主看守房屋。",
    "X88n1641_001:0027b09_3": "被賊七鎗而死。",
    "X88n1641_001:0027b09_4": "頃之厥弟來看。",
    "X88n1641_001:0027b09_5": "毛復醒。",
    "X88n1641_001:0027b09_6": "向弟曰。",
    "X88n1641_001:0027b10_7": "我夙業應七受猪身。",
    "X88n1641_001:0027b10_8": "因齋戒力。",
    "X88n1641_001:0027b10_9": "今受七鎗以酬往因。",
    "X88n1641_001:0027b11_10": "徑生天矣。",
    "X88n1641_001:0027b11_11": "言訖遂逝。",
    "X88n1641_001:0027b11_12": "其弟素不信善。",
    "X88n1641_001:0027b11_13": "聞之駭然。",
    "X88n1641_001:0027b11_14": "亦遂回心。",
    "X88n1641_001:0027b13_0": "九華山澗多產石雞。",
    "X88n1641_001:0027b13_1": "形似蝦蟆而大。",
    "X88n1641_001:0027b13_2": "味勝家雞。",
    "X88n1641_001:0027b13_3": "每有上司過縣。",
    "X88n1641_001:0027b14_4": "必票取之。",
    "X88n1641_001:0027b14_5": "偶一夜。",
    "X88n1641_001:0027b14_6": "莊人以火照巖。",
    "X88n1641_001:0027b14_7": "舒手探取。",
    "X88n1641_001:0027b15_8": "被石雞咬住兩手。",
    "X88n1641_001:0027b15_9": "死不可㧞。",
    "X88n1641_001:0027b15_10": "直至五更。",
    "X88n1641_001:0027b15_11": "聞寺鐘聲。",
    "X88n1641_001:0027b16_0": "石雞各似合掌念佛之狀。",
    "X88n1641_001:0027b16_1": "莊人乃得脫走。",
    "X88n1641_001:0027b17_0": "池州府有一人。",
    "X88n1641_001:0027b17_1": "恒誦三官經。",
    "X88n1641_001:0027b17_2": "流賊臨城。",
    "X88n1641_001:0027b17_3": "其人夢三官告云。",
    "X88n1641_001:0027b18_4": "汝前世曾殺一人。",
    "X88n1641_001:0027b18_5": "今來報讐。",
    "X88n1641_001:0027b18_6": "不可免矣。",
    "X88n1641_001:0027b18_7": "驚懼而醒。",
    "X88n1641_001:0027b19_8": "復加懇禱。",
    "X88n1641_001:0027b19_9": "又得夢云。",
    "X88n1641_001:0027b19_10": "往業難逃。",
    "X88n1641_001:0027b19_11": "豈能曲救。",
    "X88n1641_001:0027b19_12": "但汝夙冤名朱七。",
    "X88n1641_001:0027b20_13": "騎紅馬。",
    "X88n1641_001:0027b20_14": "明日必來。",
    "X88n1641_001:0027b20_15": "汝可跪於門前。",
    "X88n1641_001:0027b20_16": "口稱朱七將軍饒命。",
    "X88n1641_001:0027b21_17": "彼或問汝何故知我名字。",
    "X88n1641_001:0027b21_18": "即以兩夢告之可也。",
    "X88n1641_001:0027b22_19": "次日果於門前見有騎紅馬者。",
    "X88n1641_001:0027b22_20": "跪稱朱七將軍饒命。",
    "X88n1641_001:0027b23_21": "賊聞驚異。",
    "X88n1641_001:0027b23_22": "問知其故。",
    "X88n1641_001:0027b23_23": "遂憮然若失。",
    "X88n1641_001:0027b23_24": "置之不殺而去。",
    "X88n1641_001:0027c01_0": "釋復禮。",
    "X88n1641_001:0027c01_1": "訪知友。",
    "X88n1641_001:0027c01_2": "歸九華。",
    "X88n1641_001:0027c01_3": "夜夢黃冠羽流三人奔求救命。",
    "X88n1641_001:0027c02_4": "旁有同衣詆之。",
    "X88n1641_001:0027c02_5": "次日行路。",
    "X88n1641_001:0027c02_6": "見一童子手提三鱔。",
    "X88n1641_001:0027c02_7": "肥大異常。",
    "X88n1641_001:0027c03_8": "買放井中。",
    "X88n1641_001:0027c03_9": "旁有一釋痛加訶罵。",
    "X88n1641_001:0027c03_10": "謂不宜放入於井。",
    "X88n1641_001:0027c04_11": "方悟夜夢即此三鱔云(已上六事俱釋隆仁說)。",
    "X88n1641_001:0027c05_0": "徽州商人程伯鱗。",
    "X88n1641_001:0027c05_1": "久居揚州。",
    "X88n1641_001:0027c05_2": "事觀音大士甚虔。",
    "X88n1641_001:0027c05_3": "乙酉夏北兵破揚城。",
    "X88n1641_001:0027c06_4": "程禱大士求救。",
    "X88n1641_001:0027c06_5": "乃得夢云。",
    "X88n1641_001:0027c06_6": "汝家共十七人。",
    "X88n1641_001:0027c07_7": "餘十六口俱不在劫。",
    "X88n1641_001:0027c07_8": "惟汝在數。",
    "X88n1641_001:0027c07_9": "不可逃也。",
    "X88n1641_001:0027c07_10": "程既醒。",
    "X88n1641_001:0027c08_11": "又復懇禱。",
    "X88n1641_001:0027c08_12": "仍得夢云。",
    "X88n1641_001:0027c08_13": "汝前生殺王麻子二十六刀。",
    "X88n1641_001:0027c09_0": "今須償彼。",
    "X88n1641_001:0027c09_1": "決不可逃。",
    "X88n1641_001:0027c09_2": "汝當分付家中十六口。",
    "X88n1641_001:0027c09_3": "並住東廂。",
    "X88n1641_001:0027c10_4": "汝獨在中堂俟之。",
    "X88n1641_001:0027c10_5": "勿併遺累家人也。",
    "X88n1641_001:0027c10_6": "程頷之。",
    "X88n1641_001:0027c10_7": "越五日北兵扣門。",
    "X88n1641_001:0027c11_8": "程即問曰。",
    "X88n1641_001:0027c11_9": "汝非王麻子乎。",
    "X88n1641_001:0027c11_10": "若是王麻子可來殺我二十六刀。",
    "X88n1641_001:0027c12_11": "若非王麻子則本無怨。",
    "X88n1641_001:0027c12_12": "不須進門。",
    "X88n1641_001:0027c13_13": "兵云。",
    "X88n1641_001:0027c13_14": "我正是王麻子。",
    "X88n1641_001:0027c13_15": "程遂開門納之。",
    "X88n1641_001:0027c13_16": "兵下馬驚問。",
    "X88n1641_001:0027c14_0": "汝何以知我姓名。",
    "X88n1641_001:0027c14_1": "程具以兩夢告之。",
    "X88n1641_001:0027c14_2": "兵歎曰。",
    "X88n1641_001:0027c14_3": "汝前世殺我二十六刀。",
    "X88n1641_001:0027c15_4": "我則今世報汝。",
    "X88n1641_001:0027c15_5": "我今殺汝。",
    "X88n1641_001:0027c15_6": "汝於來世不將又報我乎。",
    "X88n1641_001:0027c16_7": "乃以刀背斫程二十六下而宥之。",
    "X88n1641_001:0027c16_8": "擕其家屬同至金陵。",
    "X88n1641_001:0027c19_0": "見聞錄(終)"
}