[
    {
        "source_sentence": "止觀門論頌一卷",
        "from": "T32n1655_001:0491b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世親菩薩造",
        "from": "T32n1655_001:0491b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏法師義淨奉　詔譯",
        "from": "T32n1655_001:0491b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見女形相，　　及以艶嬌姿，",
        "from": "T32n1655_001:0491b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚人不了知，　　妄生婬染意。",
        "from": "T32n1655_001:0491b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說膖脹等，　　蠲除婬欲念，",
        "from": "T32n1655_001:0491b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能隨世尊教，　　得勝果非餘。",
        "from": "T32n1655_001:0491b14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒淨有聞思，　　策勵常修習，",
        "from": "T32n1655_001:0491b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫念觀諸境，　　斯為解脫因。",
        "from": "T32n1655_001:0491b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人有瞋染，　　及昏沈睡眠，",
        "from": "T32n1655_001:0491b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "掉惡作并疑，　　此五遮修定。",
        "from": "T32n1655_001:0491b18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少聞與眾居，　　鄙事情欣樂，",
        "from": "T32n1655_001:0491b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛身并受用，　　亦能遮定心。",
        "from": "T32n1655_001:0491b20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心亂有五緣，　　情隨眾境散，",
        "from": "T32n1655_001:0491b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "味著并沈掉，　　我慢重名聞。",
        "from": "T32n1655_001:0491b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻依聖教，　　有過應說除，",
        "from": "T32n1655_001:0491b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善取住心緣，　　是為最初行。",
        "from": "T32n1655_001:0491b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次依寂靜處，　　妨難並皆無，",
        "from": "T32n1655_001:0491b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後息邪思，　　是苾芻初業。",
        "from": "T32n1655_001:0491b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應可住屍林，　　著糞掃衣服，",
        "from": "T32n1655_001:0491b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常求靜息事，　　斷除婬染心。",
        "from": "T32n1655_001:0491b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乞食見女人，　　應觀為不淨，",
        "from": "T32n1655_001:0491b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "攝眼除邪意，　　正心當取食。",
        "from": "T32n1655_001:0491c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多言多事務，　　此皆須遠離，",
        "from": "T32n1655_001:0491c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惱亂緣來逼，　　慧力應須忍。",
        "from": "T32n1655_001:0491c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樹下草𧂐中，　　或居崖窟內，",
        "from": "T32n1655_001:0491c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀時應住此，　　寂靜可修心。",
        "from": "T32n1655_001:0491c05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "習定緣境時，　　不太高太下，",
        "from": "T32n1655_001:0491c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不應極近遠，　　於境使相應。",
        "from": "T32n1655_001:0491c07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善取所緣境，　　子細善觀察，",
        "from": "T32n1655_001:0491c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閉目住心時，　　猶如開眼見。",
        "from": "T32n1655_001:0491c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根門皆攝斂，　　住念凝內心，",
        "from": "T32n1655_001:0491c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣境現前觀，　　念念令相續。",
        "from": "T32n1655_001:0491c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於前所取相，　　形貌用心觀，",
        "from": "T32n1655_001:0491c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "膖脹女根邊，　　可畏可嫌賤。",
        "from": "T32n1655_001:0491c13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如濁池水，　　風吹令動搖，",
        "from": "T32n1655_001:0491c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀諸樹影時，　　不善分明住。",
        "from": "T32n1655_001:0491c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心垢煩惱水，　　亂情風所吹，",
        "from": "T32n1655_001:0491c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澄念觀察時，　　闇昧不能住。",
        "from": "T32n1655_001:0491c17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心沈應策舉，　　可觀勝妙事，",
        "from": "T32n1655_001:0491c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如蛭飲血困，　　水澆令使甦；",
        "from": "T32n1655_001:0491c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還應速收斂，　　於舊境安心，",
        "from": "T32n1655_001:0491c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令意有堪能，　　調善皆隨念。",
        "from": "T32n1655_001:0491c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若其心掉舉，　　應思厭惡事，",
        "from": "T32n1655_001:0491c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令心寂靜住，　　如鉤斸象頭；",
        "from": "T32n1655_001:0491c23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離於沈掉，　　應平等運心，",
        "from": "T32n1655_001:0491c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨情住捨中，　　此時無過咎。",
        "from": "T32n1655_001:0491c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從此漸得住，　　取相影心安，",
        "from": "T32n1655_001:0491c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明了中道行，　　正念燈持照。",
        "from": "T32n1655_001:0491c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此時用尋伺，　　次第應觀察，",
        "from": "T32n1655_001:0491c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定影即便生，　　分明現前住。",
        "from": "T32n1655_001:0491c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不動搖明淨，　　如大丈夫形，",
        "from": "T32n1655_001:0492a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此影望前觀，　　是為差別相。",
        "from": "T32n1655_001:0492a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此相既生已，　　欲愛等便除，",
        "from": "T32n1655_001:0492a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是繫心人，　　初定方便相。",
        "from": "T32n1655_001:0492a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次知瞋恚體，　　本由貪染發，",
        "from": "T32n1655_001:0492a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲愛既已除，　　得離於瞋恚。",
        "from": "T32n1655_001:0492a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以勤策念，　　遣除昏睡心，",
        "from": "T32n1655_001:0492a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既觀差別相，　　疑情即便息。",
        "from": "T32n1655_001:0492a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當除惡作，　　善行安隱路，",
        "from": "T32n1655_001:0492a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜無障礙，　　能防於掉舉。",
        "from": "T32n1655_001:0492a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知用麁尋，　　觀其所取相，",
        "from": "T32n1655_001:0492a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於心影內，　　以伺細推求。",
        "from": "T32n1655_001:0492a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見差別心喜，　　由此得輕安，",
        "from": "T32n1655_001:0492a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次證於樂定，　　定支次如是，",
        "from": "T32n1655_001:0492a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是根本定，　　善安於念心，",
        "from": "T32n1655_001:0492a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如欲至村，　　及至村中者。",
        "from": "T32n1655_001:0492a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既獲根本定，　　更復作餘修，",
        "from": "T32n1655_001:0492a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得他心宿住，　　神通天眼耳。",
        "from": "T32n1655_001:0492a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此有伺時，　　心未能靜住，",
        "from": "T32n1655_001:0492a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如河有浪，　　非上地應知。",
        "from": "T32n1655_001:0492a20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得初定已，　　仍於所緣住，",
        "from": "T32n1655_001:0492a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次依二靜慮，　　尋伺皆止息。",
        "from": "T32n1655_001:0492a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖得住此位，　　尚有喜水漂，",
        "from": "T32n1655_001:0492a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入第三定時，　　其心便靜住。",
        "from": "T32n1655_001:0492a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由其心有樂，　　未能令住念，",
        "from": "T32n1655_001:0492a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既證四靜慮，　　眾過並皆除。",
        "from": "T32n1655_001:0492a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "退分勝進分，　　住分決擇分，",
        "from": "T32n1655_001:0492a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靜慮有四種，　　修定者初知。",
        "from": "T32n1655_001:0492a28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若定順煩惱，　　此名為退分，",
        "from": "T32n1655_001:0492a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後勝為勝分，　　自住住應知。",
        "from": "T32n1655_001:0492b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由先善分別，　　是決擇道因，",
        "from": "T32n1655_001:0492b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此定能招彼，　　名為決擇分。",
        "from": "T32n1655_001:0492b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於無常等相，　　作苦等行解，",
        "from": "T32n1655_001:0492b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若得此定者，　　是煖等道分。",
        "from": "T32n1655_001:0492b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於青膖等相，　　觀事有多途，",
        "from": "T32n1655_001:0492b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如聖教修行，　　差別宜應識。",
        "from": "T32n1655_001:0492b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死屍風鼓腹，　　穴處有膿流，",
        "from": "T32n1655_001:0492b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "連跨並皆麁，　　說名為膖脹。",
        "from": "T32n1655_001:0492b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不愛身麁分，　　唯貪細滑身，",
        "from": "T32n1655_001:0492b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對此染心人，　　令修如是觀。",
        "from": "T32n1655_001:0492b11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於死屍分，　　少有白膿流，",
        "from": "T32n1655_001:0492b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘肉並多青，　　說此為青膖。",
        "from": "T32n1655_001:0492b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "覩色而生愛，　　斯名愛色人，",
        "from": "T32n1655_001:0492b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對治以青膖，　　日親之所說。",
        "from": "T32n1655_001:0492b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死屍膿遍出，　　是謂膿流相，",
        "from": "T32n1655_001:0492b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對彼愛香人，　　令觀染心息。",
        "from": "T32n1655_001:0492b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死屍腰爛斷，　　名為斷壞相，",
        "from": "T32n1655_001:0492b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對彼愛全身，　　大仙尊為說。",
        "from": "T32n1655_001:0492b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屍骸狐狢噉，　　鳥啄有殘筋，",
        "from": "T32n1655_001:0492b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對治愛肌膚，　　為說食殘相。",
        "from": "T32n1655_001:0492b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手足諸支骨，　　隨處皆分散，",
        "from": "T32n1655_001:0492b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "對貪支分人，　　說骨邪亂相。",
        "from": "T32n1655_001:0492b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即於骨亂相，　　刀杖斫分離，",
        "from": "T32n1655_001:0492b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為愛全身，　　令觀打亂相。",
        "from": "T32n1655_001:0492b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屍骸被刀斫，　　或由鉾箭傷，",
        "from": "T32n1655_001:0492b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流血遍殘軀，　　名為血塗相。",
        "from": "T32n1655_001:0492b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨潔香塗體，　　新莊著彩衣，",
        "from": "T32n1655_001:0492b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此起貪人，　　用斯為妙藥。",
        "from": "T32n1655_001:0492b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於境唯獨愛，　　不許外人看，",
        "from": "T32n1655_001:0492c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多虫唼死屍，　　令觀除惡念。",
        "from": "T32n1655_001:0492c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "骸肉皆銷散，　　但唯牙骨存，",
        "from": "T32n1655_001:0492c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於齒生貪者，　　令觀齒骨相。",
        "from": "T32n1655_001:0492c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若見新死者，　　識去有殘形，",
        "from": "T32n1655_001:0492c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂著眾生貪，　　令除嬌態欲。",
        "from": "T32n1655_001:0492c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屎尿及洟唾，　　合聚共成身，",
        "from": "T32n1655_001:0492c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十二種物，　　皮囊喚作人。",
        "from": "T32n1655_001:0492c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮毛并爪齒，　　肝肚等相因，",
        "from": "T32n1655_001:0492c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內扶三百骨，　　橫纏九百筋，",
        "from": "T32n1655_001:0492c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九孔流不淨，　　垢污穢難陳，",
        "from": "T32n1655_001:0492c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審觀真可惡，　　智者不應親。",
        "from": "T32n1655_001:0492c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既觀他女體，　　亦復察己形，",
        "from": "T32n1655_001:0492c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於斯貪染因，　　理應常繫念。",
        "from": "T32n1655_001:0492c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不出三界獄，　　咸由欲染心，",
        "from": "T32n1655_001:0492c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故明智者，　　極善思其事。",
        "from": "T32n1655_001:0492c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經多地獄苦，　　幸會得人身，",
        "from": "T32n1655_001:0492c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈得縱狂心，　　不修殊勝行？",
        "from": "T32n1655_001:0492c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婬貪有多種，　　隨生愛不同，",
        "from": "T32n1655_001:0492c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一觀並能除，　　謂是白骨觀。",
        "from": "T32n1655_001:0492c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色觸形嬌態，　　衣纓生染著，",
        "from": "T32n1655_001:0492c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何藥能除此，　　無過白骨觀。",
        "from": "T32n1655_001:0492c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於足大指，　　定心緣作瘡，",
        "from": "T32n1655_001:0492c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破壞既膿流，　　肉皆隨墮落。",
        "from": "T32n1655_001:0492c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即觀指骨形，　　由如白鴿色，",
        "from": "T32n1655_001:0492c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其瘡既漸大，　　膚肉盡皆除。",
        "from": "T32n1655_001:0492c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是次第，　　身肉皆除盡，",
        "from": "T32n1655_001:0492c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正念勝解成，　　但觀其骨鎖。",
        "from": "T32n1655_001:0492c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有片肉在，　　即名為亂意，",
        "from": "T32n1655_001:0492c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況復縱心猨，　　馳求趣諸境。",
        "from": "T32n1655_001:0493a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於多時繫想，　　自知能善住，",
        "from": "T32n1655_001:0493a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次漸及餘人，　　總觀為骨鎖。",
        "from": "T32n1655_001:0493a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "漸寬至海際，　　滿中皆白骨，",
        "from": "T32n1655_001:0493a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此定既成已，　　捨廣復令狹。",
        "from": "T32n1655_001:0493a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略時從外捨，　　乃至唯身骨，",
        "from": "T32n1655_001:0493a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還觀足指端，　　是定心次第。",
        "from": "T32n1655_001:0493a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時片片捨，　　極至於頂骨，",
        "from": "T32n1655_001:0493a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知最後心，　　眉間攝令住。",
        "from": "T32n1655_001:0493a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作此修習，　　常生勝梵宮，",
        "from": "T32n1655_001:0493a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不落墮三塗，　　得生於五淨。",
        "from": "T32n1655_001:0493a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人間散心善，　　還流生死河，",
        "from": "T32n1655_001:0493a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智人修定心，　　如救身衣火。",
        "from": "T32n1655_001:0493a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即可捨諸緣，　　宜居靜林處，",
        "from": "T32n1655_001:0493a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿使無常逼，　　虛死散心中。",
        "from": "T32n1655_001:0493a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以般若淨心，　　終獲可愛果，",
        "from": "T32n1655_001:0493a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如不願後有，　　於勝道應修。",
        "from": "T32n1655_001:0493a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "剃髮著袈裟，　　宜應修聖道，",
        "from": "T32n1655_001:0493a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘諠雜事，　　咸為生死因。",
        "from": "T32n1655_001:0493a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "止觀行門七十頌",
        "from": "T32n1655_001:0493a20_100",
        "context_with_next_sentence": false
    }
]