[
    {
        "source_sentence": "入布薩堂說偈文等",
        "from": "T85n2852_001:1301a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒清淨如滿月　　身口皎潔無瑕穢",
        "from": "T85n2852_001:1301a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨和合無違諍　　爾乃可得同布薩",
        "from": "T85n2852_001:1301a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八功德水淨諸塵　　灌掌去垢心無染",
        "from": "T85n2852_001:1301a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉持禁戒無缺犯　　一切眾生悉如是",
        "from": "T85n2852_001:1301a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅漢聖僧集　　凡夫眾和合",
        "from": "T85n2852_001:1301a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香湯浴淨　　布薩度眾生",
        "from": "T85n2852_001:1301a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水勳沐澡諸垢　　法身具足五分充",
        "from": "T85n2852_001:1301a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "般若圓照解脫滿　　群生同會法界融",
        "from": "T85n2852_001:1301a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戒香定香解脫香　　光明雲臺遍世界",
        "from": "T85n2852_001:1301a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養十方無量佛　　見聞普勳證寂滅",
        "from": "T85n2852_001:1301a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛無礙解脫籌　　難□□□□□菓",
        "from": "T85n2852_001:1301a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今歡喜頂戴受　　一切眾生悉如是",
        "from": "T85n2852_001:1301a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具足清淨受此籌　　具足清淨還此籌",
        "from": "T85n2852_001:1301a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅持禁戒無缺犯　　一切眾生悉如是",
        "from": "T85n2852_001:1301a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨如滿月　　清淨應布薩",
        "from": "T85n2852_001:1301a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身口業清淨　　爾乃同布薩",
        "from": "T85n2852_001:1301a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛出世第一快　　聞法奉行歡喜快",
        "from": "T85n2852_001:1301b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大眾和合寂滅快　　眾生離苦安樂快",
        "from": "T85n2852_001:1301b02_0",
        "context_with_next_sentence": true
    }
]