[
    {
        "source_sentence": "禮法華經儀式",
        "from": "T46n1944_001:0956c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方法界常住三寶拜起胡跪燒香運想已合掌唱云",
        "from": "T46n1944_001:0956c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願此香華雲。遍滿十方界。供養一切佛。妙法",
        "from": "T46n1944_001:0956c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華經。",
        "from": "T46n1944_001:0956c26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩聲聞眾。",
        "from": "T46n1944_001:0956c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受用作佛事一拜起立歎云。",
        "from": "T46n1944_001:0956c26_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首十方佛　　圓滿最上乘",
        "from": "T46n1944_001:0956c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本迹開二門　　法喻談真祕",
        "from": "T46n1944_001:0956c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普使諸權小　　悉證佛菩提",
        "from": "T46n1944_001:0956c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今誓歸依　　願超生死海",
        "from": "T46n1944_001:0957a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎已。",
        "from": "T46n1944_001:0957a02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意述誠。",
        "from": "T46n1944_001:0957a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖曰禮經。",
        "from": "T46n1944_001:0957a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應須禮佛菩薩。",
        "from": "T46n1944_001:0957a02_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使三寶義足。",
        "from": "T46n1944_001:0957a02_26",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮本師釋迦牟尼佛。",
        "from": "T46n1944_001:0957a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮過去多寶佛。",
        "from": "T46n1944_001:0957a04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮十方分身釋迦牟尼佛。",
        "from": "T46n1944_001:0957a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮盡法華經中。",
        "from": "T46n1944_001:0957a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及十方三世一切諸佛。",
        "from": "T46n1944_001:0957a07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮妙法蓮華經。",
        "from": "T46n1944_001:0957a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙字法寶下去每字準此一唱一拜。",
        "from": "T46n1944_001:0957a08_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮盡法華經中。",
        "from": "T46n1944_001:0957a09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及十方三世一切菩薩聲聞緣覺得道賢聖僧。",
        "from": "T46n1944_001:0957a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心頂禮普賢菩薩摩訶薩拜已胡跪運想準常儀。",
        "from": "T46n1944_001:0957a11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "志心懺悔。",
        "from": "T46n1944_001:0957a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我某甲與一切眾生從無始來。",
        "from": "T46n1944_001:0957a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷失真心流轉生死。",
        "from": "T46n1944_001:0957a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六根罪障無量無邊。",
        "from": "T46n1944_001:0957a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "圓妙佛乘無以開解。",
        "from": "T46n1944_001:0957a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切所願不得現前我今禮敬妙法華經。",
        "from": "T46n1944_001:0957a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此善根發露黑惡。",
        "from": "T46n1944_001:0957a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過現未來三業所造。",
        "from": "T46n1944_001:0957a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無邊重罪皆得消滅。",
        "from": "T46n1944_001:0957a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心清淨惑障蠲除。",
        "from": "T46n1944_001:0957a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福智莊嚴淨因增長。",
        "from": "T46n1944_001:0957a17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他行願速得圓成。",
        "from": "T46n1944_001:0957a18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願諸如來常在說法。",
        "from": "T46n1944_001:0957a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有功德起隨喜心。",
        "from": "T46n1944_001:0957a18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "回向菩提證常樂果。",
        "from": "T46n1944_001:0957a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之日正念現前。",
        "from": "T46n1944_001:0957a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "面奉彌陀及諸聖眾。",
        "from": "T46n1944_001:0957a20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一剎那頃生蓮華中。",
        "from": "T46n1944_001:0957a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普願眾生俱成佛道懺悔發願已。",
        "from": "T46n1944_001:0957a21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命禮三寶。",
        "from": "T46n1944_001:0957a21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南無佛　南無法　南無僧　南無釋迦牟尼佛　南無妙法蓮華經　南無文殊師利菩薩　南無普賢菩薩旋竟三歸依如常禮法華經儀式",
        "from": "T46n1944_001:0957a25_100",
        "context_with_next_sentence": false
    }
]