[
    {
        "source_sentence": "佛說摩尼羅亶經",
        "from": "T21n1393_001:0910b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東晉天竺三藏竺曇無蘭譯",
        "from": "T21n1393_001:0910b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是。一時佛在舍衛國祇樹給孤獨園。時",
        "from": "T21n1393_001:0910b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與摩訶比丘僧。",
        "from": "T21n1393_001:0910b07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說摩尼羅亶經。",
        "from": "T21n1393_001:0910b07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛問阿難言。",
        "from": "T21n1393_001:0910b07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天下人民得不安隱用何等故。",
        "from": "T21n1393_001:0910b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用天下萬民多有疾病者病痛者用何等故。",
        "from": "T21n1393_001:0910b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用出母腹痛用傷心痛頭痛目眩不能飲食。",
        "from": "T21n1393_001:0910b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔皆所為。",
        "from": "T21n1393_001:0910b10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今諸比丘大懼怖如是。",
        "from": "T21n1393_001:0910b11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便前白佛言。",
        "from": "T21n1393_001:0910b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛從何所來去至何所。",
        "from": "T21n1393_001:0910b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人民大愁憂不樂。",
        "from": "T21n1393_001:0910b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛會諸比丘摩訶迦葉惟阿那律離越摩訶目犍連舍利弗阿難因持羅。",
        "from": "T21n1393_001:0910b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛便說摩尼羅亶經。",
        "from": "T21n1393_001:0910b15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛便舉諸佛名字。",
        "from": "T21n1393_001:0910b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一惟衛佛第二式佛。",
        "from": "T21n1393_001:0910b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三隨葉佛第四拘留秦佛。",
        "from": "T21n1393_001:0910b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五拘那含牟尼佛第六迦葉佛。",
        "from": "T21n1393_001:0910b17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七釋迦文佛。",
        "from": "T21n1393_001:0910b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今是經皆從諸佛口中出。",
        "from": "T21n1393_001:0910b18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一式叉羅第二揵陀羅。",
        "from": "T21n1393_001:0910b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三揵頭羅第四彌佉羅。",
        "from": "T21n1393_001:0910b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五乾朱羅第六摩油羅。",
        "from": "T21n1393_001:0910b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七阿須輪第八隨沙門。",
        "from": "T21n1393_001:0910b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九隨孫第十𮥝提。",
        "from": "T21n1393_001:0910b21_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都盧大小一切人民有得疾病者。",
        "from": "T21n1393_001:0910b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今佛令諸比丘僧比丘尼優婆塞優婆夷。",
        "from": "T21n1393_001:0910b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當說是經。",
        "from": "T21n1393_001:0910b23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有國中鬼。",
        "from": "T21n1393_001:0910b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有山中鬼有林中鬼。",
        "from": "T21n1393_001:0910b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有草暮鬼有塚間鬼。",
        "from": "T21n1393_001:0910b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有塚中鬼有地上鬼。",
        "from": "T21n1393_001:0910b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有水中鬼有水邊鬼。",
        "from": "T21n1393_001:0910b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有火中鬼有火邊鬼。",
        "from": "T21n1393_001:0910b26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有北斗鬼有虛空中鬼。",
        "from": "T21n1393_001:0910b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有市井鬼有死人鬼。",
        "from": "T21n1393_001:0910b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有生人鬼有飢餓鬼。",
        "from": "T21n1393_001:0910b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有道外鬼有道中鬼。",
        "from": "T21n1393_001:0910b28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有堂外鬼有堂中鬼。",
        "from": "T21n1393_001:0910b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有身中鬼有身外鬼。",
        "from": "T21n1393_001:0910b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有飯食鬼有臥時鬼。",
        "from": "T21n1393_001:0910b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今佛言有赤色鬼有黑色鬼。",
        "from": "T21n1393_001:0910c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有長鬼有短鬼。",
        "from": "T21n1393_001:0910c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大鬼有小鬼。",
        "from": "T21n1393_001:0910c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有中適鬼有白色鬼。",
        "from": "T21n1393_001:0910c02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有黃色鬼有青色鬼。",
        "from": "T21n1393_001:0910c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有黑色鬼有夢寤鬼。",
        "from": "T21n1393_001:0910c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有朝起鬼有步行鬼。",
        "from": "T21n1393_001:0910c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有飛行鬼有問人魂魄鬼。",
        "from": "T21n1393_001:0910c04_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有生人鬼有死人鬼。",
        "from": "T21n1393_001:0910c04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言若有瞋恚刀杖起時。",
        "from": "T21n1393_001:0910c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當念是摩尼羅亶經。",
        "from": "T21n1393_001:0910c06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸鬼神則為破碎。",
        "from": "T21n1393_001:0910c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛告諸比丘。",
        "from": "T21n1393_001:0910c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有受是經者。",
        "from": "T21n1393_001:0910c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有病瘦當說是經。",
        "from": "T21n1393_001:0910c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有頭痛目眩寒熱傷心。",
        "from": "T21n1393_001:0910c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常當讀是摩尼羅亶經。",
        "from": "T21n1393_001:0910c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸鬼神則頭破作七分。",
        "from": "T21n1393_001:0910c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有縣官盜賊水火。",
        "from": "T21n1393_001:0910c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則當讀是摩尼羅亶經。",
        "from": "T21n1393_001:0910c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸鬼神不得復嬈害人。",
        "from": "T21n1393_001:0910c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今是經諸佛口中所出。",
        "from": "T21n1393_001:0910c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有國中鬼。",
        "from": "T21n1393_001:0910c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者名深沙二者名浮丘。",
        "from": "T21n1393_001:0910c12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是二鬼健行求人長短。",
        "from": "T21n1393_001:0910c13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有頭痛目眩寒熱傷心。",
        "from": "T21n1393_001:0910c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即當舉是二鬼名字。",
        "from": "T21n1393_001:0910c14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便當說摩尼羅亶經。",
        "from": "T21n1393_001:0910c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是諸鬼神無不破碎者。",
        "from": "T21n1393_001:0910c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有青色鬼黃色鬼黑色鬼。",
        "from": "T21n1393_001:0910c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "高大鬼卑小鬼廣長鬼。",
        "from": "T21n1393_001:0910c17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大小諸鬼神。",
        "from": "T21n1393_001:0910c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "喜嬈天下人民者。",
        "from": "T21n1393_001:0910c17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其鬼名金曼鬼薜荔鬼。",
        "from": "T21n1393_001:0910c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飢餓鬼慳貪鬼。",
        "from": "T21n1393_001:0910c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤苦鬼病瘦鬼。",
        "from": "T21n1393_001:0910c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有痛痒鬼有思想鬼。",
        "from": "T21n1393_001:0910c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身中鬼身外鬼。",
        "from": "T21n1393_001:0910c20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形殘鬼跛踺鬼。",
        "from": "T21n1393_001:0910c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛狂鬼癡聾鬼。",
        "from": "T21n1393_001:0910c20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瘖瘂鬼呻吟鬼。",
        "from": "T21n1393_001:0910c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "啼哭鬼閑病鬼。",
        "from": "T21n1393_001:0910c21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛耗鬼嫉妬鬼。",
        "from": "T21n1393_001:0910c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魍魎鬼熒惑鬼。",
        "from": "T21n1393_001:0910c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遊光鬼鎮厭鬼。",
        "from": "T21n1393_001:0910c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪咀鬼伏尸注鬼。",
        "from": "T21n1393_001:0910c22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癩死注鬼官舍注鬼。",
        "from": "T21n1393_001:0910c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍營鬼亭傳鬼。",
        "from": "T21n1393_001:0910c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獄死鬼囚死鬼水死鬼溺死鬼。",
        "from": "T21n1393_001:0910c24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火死鬼燒死鬼。",
        "from": "T21n1393_001:0910c24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "客死未葬鬼市死鬼。",
        "from": "T21n1393_001:0910c25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道路死鬼渴死鬼。",
        "from": "T21n1393_001:0910c25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓死鬼喝死鬼。",
        "from": "T21n1393_001:0910c26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凍死鬼兵死鬼。",
        "from": "T21n1393_001:0910c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "血死鬼腥死鬼。",
        "from": "T21n1393_001:0910c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "逋禱死鬼鬪死鬼。",
        "from": "T21n1393_001:0910c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棒死鬼絞死鬼。",
        "from": "T21n1393_001:0910c27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自懸死鬼自刺死鬼。",
        "from": "T21n1393_001:0910c28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怨家死鬼強死鬼。",
        "from": "T21n1393_001:0910c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腐皮鬼斷人毛髮鬼。",
        "from": "T21n1393_001:0910c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飲人血鬼飛行鬼。",
        "from": "T21n1393_001:0910c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "騎乘鬼駕車鬼。",
        "from": "T21n1393_001:0910c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步行鬼逢忤鬼。",
        "from": "T21n1393_001:0911a01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山神鬼石神鬼。",
        "from": "T21n1393_001:0911a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土神鬼海邊鬼。",
        "from": "T21n1393_001:0911a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "海中鬼橋梁鬼。",
        "from": "T21n1393_001:0911a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溝渠鬼道中鬼。",
        "from": "T21n1393_001:0911a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道外鬼胡夷鬼。",
        "from": "T21n1393_001:0911a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羗虜鬼樹木精魅鬼。",
        "from": "T21n1393_001:0911a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百蟲精魅鬼鳥獸精魅鬼。",
        "from": "T21n1393_001:0911a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嵠谷鬼門中鬼。",
        "from": "T21n1393_001:0911a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "門外鬼戶中鬼。",
        "from": "T21n1393_001:0911a04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "戶外鬼井竈鬼。",
        "from": "T21n1393_001:0911a04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "污池鬼溷神鬼。",
        "from": "T21n1393_001:0911a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方道鬼蠱道鬼。",
        "from": "T21n1393_001:0911a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不臣屬鬼詐稱鬼。",
        "from": "T21n1393_001:0911a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大小諸鬼神。",
        "from": "T21n1393_001:0911a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆不得嬈害其身。",
        "from": "T21n1393_001:0911a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼神不隨我言者。",
        "from": "T21n1393_001:0911a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭破作七分。",
        "from": "T21n1393_001:0911a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人得病瘦者。",
        "from": "T21n1393_001:0911a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當舉是上諸鬼神名字。",
        "from": "T21n1393_001:0911a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪病瘦者即得除差。",
        "from": "T21n1393_001:0911a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是經釋迦文佛口中所出。",
        "from": "T21n1393_001:0911a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸鬼神聞是經。",
        "from": "T21n1393_001:0911a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從今已後悉破解愈。",
        "from": "T21n1393_001:0911a10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說經已。",
        "from": "T21n1393_001:0911a10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘比丘尼優婆塞優婆夷諸天龍鬼神人民皆受佛恩前為佛作禮而去。",
        "from": "T21n1393_001:0911a12_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說摩尼羅亶經",
        "from": "T21n1393_001:0911a13_100",
        "context_with_next_sentence": false
    }
]