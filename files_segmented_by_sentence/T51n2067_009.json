{
    "T51n2067_009:0040b13_0": "弘贊法華傳卷第九",
    "T51n2067_009:0040b15_0": "藍谷沙門慧祥撰",
    "T51n2067_009:0040b16_0": "轉讀第七",
    "T51n2067_009:0040b17_0": "外國蘭若比丘齊高宗明皇帝",
    "T51n2067_009:0040b18_0": "梁中宗元皇帝宋蓋州素寺釋智遠",
    "T51n2067_009:0040b19_0": "隋魏州刺史崔彥武唐巴州刺史蘇長妾唐蘇州嘉興縣令劉弘仁唐鄭州市辛老唐新羅國沙彌唐并州石壁寺鴿鶵唐洛陽白馬寺釋法眼唐雍州萬年縣劉時大智度論云。",
    "T51n2067_009:0040b25_1": "昔有一國中一阿蘭若比丘。",
    "T51n2067_009:0040b25_2": "大讀摩訶衍。",
    "T51n2067_009:0040b26_3": "其國王。",
    "T51n2067_009:0040b26_4": "常解髮。",
    "T51n2067_009:0040b26_5": "令其蹈過。",
    "T51n2067_009:0040b26_6": "又有一比丘。",
    "T51n2067_009:0040b27_7": "乃語王言。",
    "T51n2067_009:0040b27_8": "此摩訶盧。",
    "T51n2067_009:0040b27_9": "不多讀經。",
    "T51n2067_009:0040b27_10": "何以大供養如是。",
    "T51n2067_009:0040b28_11": "王言。",
    "T51n2067_009:0040b28_12": "我一日。",
    "T51n2067_009:0040b28_13": "半夜欲見此比丘。",
    "T51n2067_009:0040b28_14": "即往到其住處。",
    "T51n2067_009:0040b29_15": "見此比丘在窟中。",
    "T51n2067_009:0040b29_16": "讀法華經。",
    "T51n2067_009:0040b29_17": "見一金色光明人。",
    "T51n2067_009:0040c01_18": "騎白象合掌供養。",
    "T51n2067_009:0040c01_19": "我來轉迴。",
    "T51n2067_009:0040c02_0": "便滅不現。",
    "T51n2067_009:0040c02_1": "我即問。",
    "T51n2067_009:0040c02_2": "大德。",
    "T51n2067_009:0040c02_3": "以我來故。",
    "T51n2067_009:0040c02_4": "光明人滅。",
    "T51n2067_009:0040c03_5": "何也。",
    "T51n2067_009:0040c03_6": "比丘言。",
    "T51n2067_009:0040c03_7": "此即遍吉菩薩。",
    "T51n2067_009:0040c03_8": "自言。",
    "T51n2067_009:0040c03_9": "若有人讀誦法華經者。",
    "T51n2067_009:0040c04_10": "我當乘白象來教導之。",
    "T51n2067_009:0040c04_11": "我誦此經故。",
    "T51n2067_009:0040c05_12": "遍吉自來。",
    "T51n2067_009:0040c05_13": "遍吉。",
    "T51n2067_009:0040c05_14": "即普賢也。",
    "T51n2067_009:0040c06_0": "齊高宗明皇帝。",
    "T51n2067_009:0040c06_1": "諱鸞。",
    "T51n2067_009:0040c06_2": "字景棲。",
    "T51n2067_009:0040c06_3": "凝神覺海。",
    "T51n2067_009:0040c06_4": "思積耆山。",
    "T51n2067_009:0040c07_5": "灑一雨於群曚。",
    "T51n2067_009:0040c07_6": "潤三枝於庶物。",
    "T51n2067_009:0040c07_7": "造千金像。",
    "T51n2067_009:0040c08_8": "寫一切經。",
    "T51n2067_009:0040c08_9": "持六淨齊。",
    "T51n2067_009:0040c08_10": "口誦波若。",
    "T51n2067_009:0040c08_11": "造歸依寺。",
    "T51n2067_009:0040c09_12": "召集禪僧。",
    "T51n2067_009:0040c09_13": "常讀法華。",
    "T51n2067_009:0040c09_14": "亟淹寒暑。",
    "T51n2067_009:0040c10_0": "梁中宗元皇帝。",
    "T51n2067_009:0040c10_1": "諱繹。",
    "T51n2067_009:0040c10_2": "字世誠。",
    "T51n2067_009:0040c10_3": "積善餘慶。",
    "T51n2067_009:0040c10_4": "家傳至德。",
    "T51n2067_009:0040c11_5": "宿奉勝因。",
    "T51n2067_009:0040c11_6": "懷深信。",
    "T51n2067_009:0040c11_7": "造天居天宮二寺。",
    "T51n2067_009:0040c12_0": "供養千僧。",
    "T51n2067_009:0040c12_1": "講成實論。",
    "T51n2067_009:0040c12_2": "學毘曇。",
    "T51n2067_009:0040c12_3": "於琰師。",
    "T51n2067_009:0040c12_4": "習分蓍於智上。",
    "T51n2067_009:0040c13_5": "手書聖僧。",
    "T51n2067_009:0040c13_6": "并書千佛名。",
    "T51n2067_009:0040c13_7": "誦藥王呪。",
    "T51n2067_009:0040c14_0": "又復勤求寶所。",
    "T51n2067_009:0040c14_1": "頂戴髻珠。",
    "T51n2067_009:0040c14_2": "轉讀法華。",
    "T51n2067_009:0040c14_3": "以為恒務。",
    "T51n2067_009:0040c16_0": "釋智達。",
    "T51n2067_009:0040c16_1": "益州素寺僧也。",
    "T51n2067_009:0040c16_2": "行頗流俗。",
    "T51n2067_009:0040c16_3": "而善經唄。",
    "T51n2067_009:0040c17_0": "時誦法華。",
    "T51n2067_009:0040c17_1": "年二十三。",
    "T51n2067_009:0040c17_2": "宋元徽三年六月病死。",
    "T51n2067_009:0040c18_0": "身煖不斂。",
    "T51n2067_009:0040c18_1": "遂延二日。",
    "T51n2067_009:0040c18_2": "入息稍還。",
    "T51n2067_009:0040c18_3": "至三日旦。",
    "T51n2067_009:0040c19_0": "而能言。",
    "T51n2067_009:0040c19_1": "自說。",
    "T51n2067_009:0040c19_2": "始困之時。",
    "T51n2067_009:0040c19_3": "見兩人皆著黃布袴褶。",
    "T51n2067_009:0040c20_4": "一人立于戶外。",
    "T51n2067_009:0040c20_5": "一人徑造床前。",
    "T51n2067_009:0040c20_6": "曰。",
    "T51n2067_009:0040c20_7": "上人應去。",
    "T51n2067_009:0040c21_8": "可下地。",
    "T51n2067_009:0040c21_9": "達曰。",
    "T51n2067_009:0040c21_10": "貧道體羸。",
    "T51n2067_009:0040c21_11": "不堪涉道。",
    "T51n2067_009:0040c21_12": "此人復曰。",
    "T51n2067_009:0040c22_13": "可乘輿。",
    "T51n2067_009:0040c22_14": "而輿至。",
    "T51n2067_009:0040c22_15": "達既升之。",
    "T51n2067_009:0040c22_16": "意識恍然。",
    "T51n2067_009:0040c23_17": "不復見家人屋室。",
    "T51n2067_009:0040c23_18": "及所乘輿。",
    "T51n2067_009:0040c23_19": "四望極目。",
    "T51n2067_009:0040c23_20": "但覩荒野。",
    "T51n2067_009:0040c24_21": "途逕艱危。",
    "T51n2067_009:0040c24_22": "示道登躡。",
    "T51n2067_009:0040c24_23": "二人驅之。",
    "T51n2067_009:0040c24_24": "不得[但-日+木]息。",
    "T51n2067_009:0040c25_25": "至一朱門。",
    "T51n2067_009:0040c25_26": "牆闥甚華。",
    "T51n2067_009:0040c25_27": "達入至堂下。",
    "T51n2067_009:0040c25_28": "堂上有一貴人。",
    "T51n2067_009:0040c26_29": "朱幘專床坐。",
    "T51n2067_009:0040c26_30": "姿貌嚴達。",
    "T51n2067_009:0040c26_31": "甚有威容。",
    "T51n2067_009:0040c27_32": "左右兵衛百許人。",
    "T51n2067_009:0040c27_33": "皆朱衣柱刀。",
    "T51n2067_009:0040c27_34": "列直森然。",
    "T51n2067_009:0040c28_0": "貴人見達。",
    "T51n2067_009:0040c28_1": "乃斂容正坐。",
    "T51n2067_009:0040c28_2": "謂曰。",
    "T51n2067_009:0040c28_3": "出家之人。",
    "T51n2067_009:0040c28_4": "何置多過。",
    "T51n2067_009:0040c29_5": "達曰。",
    "T51n2067_009:0040c29_6": "有識以來。",
    "T51n2067_009:0040c29_7": "不憶作罪。",
    "T51n2067_009:0040c29_8": "問曰。",
    "T51n2067_009:0040c29_9": "誦戒度不。",
    "T51n2067_009:0041a01_10": "達曰。",
    "T51n2067_009:0041a01_11": "初受具足之時。",
    "T51n2067_009:0041a01_12": "實常習誦。",
    "T51n2067_009:0041a01_13": "比遂廢講。",
    "T51n2067_009:0041a02_14": "恒事轉輕。",
    "T51n2067_009:0041a02_15": "故於誦戒。",
    "T51n2067_009:0041a02_16": "時有虧損。",
    "T51n2067_009:0041a02_17": "復曰。",
    "T51n2067_009:0041a02_18": "沙門而不誦戒。",
    "T51n2067_009:0041a03_19": "此非法。",
    "T51n2067_009:0041a03_20": "可且讀經。",
    "T51n2067_009:0041a03_21": "達即誦法華三契而止。",
    "T51n2067_009:0041a04_22": "貴人。",
    "T51n2067_009:0041a04_23": "勅所錄達人曰。",
    "T51n2067_009:0041a04_24": "可送置惡地。",
    "T51n2067_009:0041a05_0": "勿令大苦。",
    "T51n2067_009:0041a05_1": "二人引達將去。",
    "T51n2067_009:0041a05_2": "行數十里。",
    "T51n2067_009:0041a05_3": "稍聞轟磕橈聲沸天。",
    "T51n2067_009:0041a06_4": "而前路轉闇。",
    "T51n2067_009:0041a06_5": "次至一門。",
    "T51n2067_009:0041a06_6": "高數十丈。",
    "T51n2067_009:0041a07_7": "色甚堅黑。",
    "T51n2067_009:0041a07_8": "蓋鐵門也。",
    "T51n2067_009:0041a07_9": "牆亦如此。",
    "T51n2067_009:0041a07_10": "達心自念。",
    "T51n2067_009:0041a08_11": "經說地獄。",
    "T51n2067_009:0041a08_12": "此其是矣。",
    "T51n2067_009:0041a08_13": "乃大恐怖。",
    "T51n2067_009:0041a08_14": "悔在世時不修業行。",
    "T51n2067_009:0041a09_15": "及入門裏。",
    "T51n2067_009:0041a09_16": "橈聲轉壯。",
    "T51n2067_009:0041a09_17": "久久靜聽。",
    "T51n2067_009:0041a09_18": "方知是人叫呼之響。",
    "T51n2067_009:0041a10_19": "門裏轉闇。",
    "T51n2067_009:0041a10_20": "無所復見。",
    "T51n2067_009:0041a10_21": "時有火光。",
    "T51n2067_009:0041a11_22": "乍滅乍揚。",
    "T51n2067_009:0041a11_23": "見數人反縛前行。",
    "T51n2067_009:0041a11_24": "後有數人。",
    "T51n2067_009:0041a12_0": "執叉刺之。",
    "T51n2067_009:0041a12_1": "血流泉涌。",
    "T51n2067_009:0041a12_2": "其人乃達從伯母。",
    "T51n2067_009:0041a12_3": "彼此相見。",
    "T51n2067_009:0041a13_4": "意欲共語。",
    "T51n2067_009:0041a13_5": "有人曳之殊疾。",
    "T51n2067_009:0041a13_6": "不暇得言。",
    "T51n2067_009:0041a13_7": "入門二百許步。",
    "T51n2067_009:0041a14_8": "見有一物。",
    "T51n2067_009:0041a14_9": "形如米圌。",
    "T51n2067_009:0041a14_10": "可高丈餘。",
    "T51n2067_009:0041a15_11": "二人執達。",
    "T51n2067_009:0041a15_12": "擲置圌上。",
    "T51n2067_009:0041a15_13": "裏有火。",
    "T51n2067_009:0041a15_14": "爛燒達身。",
    "T51n2067_009:0041a16_0": "半體皆爛。",
    "T51n2067_009:0041a16_1": "痛不可忍。",
    "T51n2067_009:0041a16_2": "自圌墮地悶絕。",
    "T51n2067_009:0041a16_3": "良久。",
    "T51n2067_009:0041a16_4": "二人復將達去。",
    "T51n2067_009:0041a17_5": "見有鐵鑊十餘。",
    "T51n2067_009:0041a17_6": "皆煮罪人。",
    "T51n2067_009:0041a17_7": "人在鑊中。",
    "T51n2067_009:0041a18_8": "隨沸出沒。",
    "T51n2067_009:0041a18_9": "鑊側有人。",
    "T51n2067_009:0041a18_10": "以叉刺之。",
    "T51n2067_009:0041a18_11": "或有攀鑊出者。",
    "T51n2067_009:0041a19_12": "兩目潰突。",
    "T51n2067_009:0041a19_13": "舌出尺餘。",
    "T51n2067_009:0041a19_14": "肉盡折爛。",
    "T51n2067_009:0041a19_15": "而猶不死。",
    "T51n2067_009:0041a20_16": "諸鑊皆滿。",
    "T51n2067_009:0041a20_17": "唯一尚空。",
    "T51n2067_009:0041a20_18": "二人謂達曰。",
    "T51n2067_009:0041a20_19": "上人即時應入此中。",
    "T51n2067_009:0041a21_20": "達聞其言。",
    "T51n2067_009:0041a21_21": "肝膽塗地。",
    "T51n2067_009:0041a21_22": "乃請之曰。",
    "T51n2067_009:0041a22_23": "幸聽貧道一時禮佛。",
    "T51n2067_009:0041a22_24": "便至心稽首。",
    "T51n2067_009:0041a22_25": "願免此苦。",
    "T51n2067_009:0041a23_26": "伏地食頃。",
    "T51n2067_009:0041a23_27": "祈悔特至。",
    "T51n2067_009:0041a23_28": "既而四望。",
    "T51n2067_009:0041a23_29": "無所復見。",
    "T51n2067_009:0041a24_30": "唯覩平原茂樹。",
    "T51n2067_009:0041a24_31": "風景清明。",
    "T51n2067_009:0041a24_32": "而二人猶導達行。",
    "T51n2067_009:0041a25_33": "至一樓下。",
    "T51n2067_009:0041a25_34": "樓形高小。",
    "T51n2067_009:0041a25_35": "上有人裁得容坐。",
    "T51n2067_009:0041a25_36": "謂達曰。",
    "T51n2067_009:0041a26_37": "沙門受輕報。",
    "T51n2067_009:0041a26_38": "殊可欣也。",
    "T51n2067_009:0041a26_39": "達於樓下。",
    "T51n2067_009:0041a26_40": "忽然不覺。",
    "T51n2067_009:0041a27_41": "還就時身。",
    "T51n2067_009:0041a28_0": "博陵寉彥武。",
    "T51n2067_009:0041a28_1": "隋開皇中。",
    "T51n2067_009:0041a28_2": "任魏州刺史。",
    "T51n2067_009:0041a28_3": "因行部至一邑。",
    "T51n2067_009:0041a29_4": "愕然驚喜。",
    "T51n2067_009:0041a29_5": "謂從者曰。",
    "T51n2067_009:0041a29_6": "吾昔嘗在此邑中為人婦。",
    "T51n2067_009:0041b01_7": "今知家處。",
    "T51n2067_009:0041b01_8": "因乘馬入修巷。",
    "T51n2067_009:0041b01_9": "屈曲至一家。",
    "T51n2067_009:0041b02_10": "令叫門。",
    "T51n2067_009:0041b02_11": "主人公年老。",
    "T51n2067_009:0041b02_12": "出來拜謁。",
    "T51n2067_009:0041b02_13": "彥武入家。",
    "T51n2067_009:0041b03_14": "先升其堂。",
    "T51n2067_009:0041b03_15": "視東壁上。",
    "T51n2067_009:0041b03_16": "去地六七尺。",
    "T51n2067_009:0041b03_17": "有隆高處。",
    "T51n2067_009:0041b04_18": "謂主人曰。",
    "T51n2067_009:0041b04_19": "吾昔讀法華經。",
    "T51n2067_009:0041b04_20": "并金釵五侯。",
    "T51n2067_009:0041b05_0": "藏此壁中。",
    "T51n2067_009:0041b05_1": "高處是也。",
    "T51n2067_009:0041b05_2": "其經第七卷尾後一紙。",
    "T51n2067_009:0041b06_0": "火燒失文字。",
    "T51n2067_009:0041b06_1": "吾至今每讀此經。",
    "T51n2067_009:0041b06_2": "至第七卷尾。",
    "T51n2067_009:0041b07_0": "忘失不能記得。",
    "T51n2067_009:0041b07_1": "因令左右。",
    "T51n2067_009:0041b07_2": "鑿東壁。",
    "T51n2067_009:0041b07_3": "果得經函。",
    "T51n2067_009:0041b08_4": "開第七卷尾及金釵並如其言。",
    "T51n2067_009:0041b08_5": "主人涕泣曰。",
    "T51n2067_009:0041b09_6": "亡妻存日。",
    "T51n2067_009:0041b09_7": "常讀此經。",
    "T51n2067_009:0041b09_8": "釵亦是妻物。",
    "T51n2067_009:0041b09_9": "妻因產死。",
    "T51n2067_009:0041b10_10": "遂失所在。",
    "T51n2067_009:0041b10_11": "不謂使君乃知其處。",
    "T51n2067_009:0041b10_12": "彥武因指庭前槐樹曰。",
    "T51n2067_009:0041b11_13": "吾欲產時。",
    "T51n2067_009:0041b11_14": "自斛頭髮。",
    "T51n2067_009:0041b11_15": "置此樹空中。",
    "T51n2067_009:0041b12_16": "試令人探樹中。",
    "T51n2067_009:0041b12_17": "果得髮。",
    "T51n2067_009:0041b12_18": "於是。",
    "T51n2067_009:0041b12_19": "主人悲喜。",
    "T51n2067_009:0041b13_0": "彥武留衣物。",
    "T51n2067_009:0041b13_1": "厚給主人而去。",
    "T51n2067_009:0041b14_0": "蘇長。",
    "T51n2067_009:0041b14_1": "未測其居貫。",
    "T51n2067_009:0041b14_2": "武德中。",
    "T51n2067_009:0041b14_3": "任都水使者。",
    "T51n2067_009:0041b14_4": "出為巴州刺史。",
    "T51n2067_009:0041b15_5": "將家口赴任。",
    "T51n2067_009:0041b15_6": "渡喜陵江。",
    "T51n2067_009:0041b15_7": "中流風起船沒。",
    "T51n2067_009:0041b16_8": "男女六十餘人。",
    "T51n2067_009:0041b16_9": "一舟溺死。",
    "T51n2067_009:0041b16_10": "唯有一妾。",
    "T51n2067_009:0041b16_11": "常讀法華經。",
    "T51n2067_009:0041b17_12": "船中水入。",
    "T51n2067_009:0041b17_13": "妾頭戴經函。",
    "T51n2067_009:0041b17_14": "誓與俱沒。",
    "T51n2067_009:0041b18_0": "既而船沒。",
    "T51n2067_009:0041b18_1": "妾猶不沈。",
    "T51n2067_009:0041b18_2": "隨波汎濫。",
    "T51n2067_009:0041b18_3": "頃之著岸。",
    "T51n2067_009:0041b18_4": "遂載經函而出。",
    "T51n2067_009:0041b19_5": "開視其經。",
    "T51n2067_009:0041b19_6": "了無濕污。",
    "T51n2067_009:0041b19_7": "在楊州嫁為人婦。",
    "T51n2067_009:0041b20_8": "而逾篤信焉。",
    "T51n2067_009:0041b21_0": "劉弘仁。",
    "T51n2067_009:0041b21_1": "年十八時。",
    "T51n2067_009:0041b21_2": "任國子學生。",
    "T51n2067_009:0041b21_3": "與同士十人。",
    "T51n2067_009:0041b22_0": "於相師處。",
    "T51n2067_009:0041b22_1": "求相吉凶。",
    "T51n2067_009:0041b22_2": "相師皆剋其富貴貧賤之時。",
    "T51n2067_009:0041b23_3": "天壽年月之數。",
    "T51n2067_009:0041b23_4": "謂弘仁曰。",
    "T51n2067_009:0041b23_5": "年至五十一。",
    "T51n2067_009:0041b24_0": "其年四月十一日必死。",
    "T51n2067_009:0041b24_1": "弘仁。",
    "T51n2067_009:0041b24_2": "時住蘇州嘉興縣令。",
    "T51n2067_009:0041b25_3": "其餘九人。",
    "T51n2067_009:0041b25_4": "皆如相者之說。",
    "T51n2067_009:0041b25_5": "禍福不差。",
    "T51n2067_009:0041b25_6": "及弘仁十八已來吉凶。",
    "T51n2067_009:0041b26_7": "皆驗。",
    "T51n2067_009:0041b26_8": "至今正年五十一矣。",
    "T51n2067_009:0041b27_9": "自度至期必死。",
    "T51n2067_009:0041b27_10": "以四月一日。",
    "T51n2067_009:0041b27_11": "遂詣州。",
    "T51n2067_009:0041b27_12": "與諸官寮取訣。",
    "T51n2067_009:0041b28_13": "時韓王元嘉。",
    "T51n2067_009:0041b28_14": "為蘇州刺史。",
    "T51n2067_009:0041b28_15": "問其所由。",
    "T51n2067_009:0041b29_16": "弘仁具陳其事。",
    "T51n2067_009:0041b29_17": "王教之修福。",
    "T51n2067_009:0041b29_18": "仁至四月八日。",
    "T51n2067_009:0041c01_19": "遂即遇疾甚篤。",
    "T51n2067_009:0041c01_20": "王請諸寺僧尼。",
    "T51n2067_009:0041c01_21": "為弘仁。",
    "T51n2067_009:0041c01_22": "轉法華經一千遍。",
    "T51n2067_009:0041c02_23": "至十一日。",
    "T51n2067_009:0041c02_24": "轉經數畢。",
    "T51n2067_009:0041c02_25": "諸僧又為弘仁。",
    "T51n2067_009:0041c03_26": "更讀一百遍。",
    "T51n2067_009:0041c03_27": "弘仁流汗[雨/泳]霂。",
    "T51n2067_009:0041c03_28": "所患都愈。",
    "T51n2067_009:0041c04_29": "平復如常。",
    "T51n2067_009:0041c04_30": "信知福力誠不可量也。",
    "T51n2067_009:0041c05_0": "有辛老者。",
    "T51n2067_009:0041c05_1": "失其名。",
    "T51n2067_009:0041c05_2": "年八十餘。",
    "T51n2067_009:0041c05_3": "住鄭州市西南角。",
    "T51n2067_009:0041c06_4": "常受持法華。",
    "T51n2067_009:0041c06_5": "專心清潔。",
    "T51n2067_009:0041c06_6": "自三十年來。",
    "T51n2067_009:0041c06_7": "每夜讀經。",
    "T51n2067_009:0041c07_8": "夜明如晝。",
    "T51n2067_009:0041c07_9": "不假燈燭。",
    "T51n2067_009:0041c07_10": "若捨經卷。",
    "T51n2067_009:0041c07_11": "還暗如常。",
    "T51n2067_009:0041c08_12": "不復見物。",
    "T51n2067_009:0041c09_0": "新羅國。",
    "T51n2067_009:0041c09_1": "有金果毅。",
    "T51n2067_009:0041c09_2": "生一男子。",
    "T51n2067_009:0041c09_3": "從小出家。",
    "T51n2067_009:0041c09_4": "樂讀法華經。",
    "T51n2067_009:0041c10_5": "至第二卷。",
    "T51n2067_009:0041c10_6": "誤燒一字。",
    "T51n2067_009:0041c10_7": "年十八。",
    "T51n2067_009:0041c10_8": "忽從夭喪。",
    "T51n2067_009:0041c11_9": "還生別處金果毅家。",
    "T51n2067_009:0041c11_10": "又得出家。",
    "T51n2067_009:0041c11_11": "即偏愛讀法華經。",
    "T51n2067_009:0041c12_12": "至第二卷。",
    "T51n2067_009:0041c12_13": "每於一字。",
    "T51n2067_009:0041c12_14": "隨問隨忘。",
    "T51n2067_009:0041c12_15": "夢有人云。",
    "T51n2067_009:0041c13_16": "小師前生。",
    "T51n2067_009:0041c13_17": "向其鄉某金果毅家生。",
    "T51n2067_009:0041c13_18": "亦得出家。",
    "T51n2067_009:0041c14_19": "在彼生時。",
    "T51n2067_009:0041c14_20": "讀誦法華。",
    "T51n2067_009:0041c14_21": "誤燒一字。",
    "T51n2067_009:0041c14_22": "是以。",
    "T51n2067_009:0041c15_0": "今生隨得忘。",
    "T51n2067_009:0041c15_1": "彼舊經現存。",
    "T51n2067_009:0041c15_2": "往彼自看。",
    "T51n2067_009:0041c15_3": "此小師。",
    "T51n2067_009:0041c16_4": "依夢向彼尋覓。",
    "T51n2067_009:0041c16_5": "果得其家。",
    "T51n2067_009:0041c16_6": "借問投宿。",
    "T51n2067_009:0041c16_7": "前生父母。",
    "T51n2067_009:0041c17_8": "依俙欲識。",
    "T51n2067_009:0041c17_9": "尋訪舊經。",
    "T51n2067_009:0041c17_10": "乃見第二。",
    "T51n2067_009:0041c17_11": "實燒一字。",
    "T51n2067_009:0041c18_12": "小師及前父母。",
    "T51n2067_009:0041c18_13": "悲喜交并。",
    "T51n2067_009:0041c18_14": "二家遂為親好。",
    "T51n2067_009:0041c19_15": "彼此無二。",
    "T51n2067_009:0041c19_16": "當即言及州縣。",
    "T51n2067_009:0041c19_17": "州縣奏聞。",
    "T51n2067_009:0041c19_18": "舉國傳詠。",
    "T51n2067_009:0041c20_19": "于今不息。",
    "T51n2067_009:0041c20_20": "即貞觀時也。",
    "T51n2067_009:0041c21_0": "有一老僧。",
    "T51n2067_009:0041c21_1": "失其名。",
    "T51n2067_009:0041c21_2": "住并州石壁寺。",
    "T51n2067_009:0041c21_3": "禪觀為業。",
    "T51n2067_009:0041c22_4": "貞觀年末。",
    "T51n2067_009:0041c22_5": "房楹上有二鴿鶵。",
    "T51n2067_009:0041c22_6": "老師每以餘食飼之。",
    "T51n2067_009:0041c23_7": "後雖漸長。",
    "T51n2067_009:0041c23_8": "羽翼未成。",
    "T51n2067_009:0041c23_9": "乃並學飛。",
    "T51n2067_009:0041c23_10": "俱墮地而死。",
    "T51n2067_009:0041c24_11": "僧因收葬。",
    "T51n2067_009:0041c24_12": "經旬日後。",
    "T51n2067_009:0041c24_13": "僧夜夢有二小兒。",
    "T51n2067_009:0041c25_14": "告曰。",
    "T51n2067_009:0041c25_15": "兒等。",
    "T51n2067_009:0041c25_16": "為先有少罪。",
    "T51n2067_009:0041c25_17": "遂受鴿身。",
    "T51n2067_009:0041c25_18": "比來聞師讀法華經。",
    "T51n2067_009:0041c26_19": "及金剛般若。",
    "T51n2067_009:0041c26_20": "得受人身。",
    "T51n2067_009:0041c26_21": "兒等。",
    "T51n2067_009:0041c27_22": "今於此寺側十餘里某村某甲家。",
    "T51n2067_009:0041c27_23": "託生為男。",
    "T51n2067_009:0041c28_24": "十月之外。",
    "T51n2067_009:0041c28_25": "當即誕育。",
    "T51n2067_009:0041c28_26": "僧乃依期。",
    "T51n2067_009:0041c28_27": "往視見此家。",
    "T51n2067_009:0041c29_28": "一婦雙生二男。",
    "T51n2067_009:0041c29_29": "因作滿月齊。",
    "T51n2067_009:0041c29_30": "僧呼二姟子曰。",
    "T51n2067_009:0042a01_31": "鴿兒。",
    "T51n2067_009:0042a01_32": "兩兒並應曰諾。",
    "T51n2067_009:0042a01_33": "一應之後。",
    "T51n2067_009:0042a01_34": "歲餘始言也。",
    "T51n2067_009:0042a03_0": "釋法眼。",
    "T51n2067_009:0042a03_1": "俗姓高。",
    "T51n2067_009:0042a03_2": "隋齊國公高顆曾孫也。",
    "T51n2067_009:0042a03_3": "俗字立敬。",
    "T51n2067_009:0042a04_4": "一名元懌。",
    "T51n2067_009:0042a04_5": "未出家時。",
    "T51n2067_009:0042a04_6": "貞觀中。",
    "T51n2067_009:0042a04_7": "與兄立覽。",
    "T51n2067_009:0042a05_8": "於他度寺僧明藏處。",
    "T51n2067_009:0042a05_9": "學讀法華波若。",
    "T51n2067_009:0042a05_10": "稍似精熟。",
    "T51n2067_009:0042a06_11": "敬後棄其所習。",
    "T51n2067_009:0042a06_12": "龍朔元年。",
    "T51n2067_009:0042a06_13": "征遼還。",
    "T51n2067_009:0042a06_14": "三年正月。",
    "T51n2067_009:0042a07_15": "往臺看勳。",
    "T51n2067_009:0042a07_16": "從順義門出。",
    "T51n2067_009:0042a07_17": "有兩騎追之曰。",
    "T51n2067_009:0042a08_18": "今捉獲矣。",
    "T51n2067_009:0042a08_19": "敬問曰。",
    "T51n2067_009:0042a08_20": "卿是何人。",
    "T51n2067_009:0042a08_21": "答曰。",
    "T51n2067_009:0042a08_22": "我是閻羅王使者。",
    "T51n2067_009:0042a09_23": "故來追卿。",
    "T51n2067_009:0042a09_24": "其人惶忙。",
    "T51n2067_009:0042a09_25": "走馬而出。",
    "T51n2067_009:0042a10_26": "欲投普光寺。",
    "T51n2067_009:0042a10_27": "使人曰。",
    "T51n2067_009:0042a10_28": "疾投寺門勿令入。",
    "T51n2067_009:0042a10_29": "入即得脫。",
    "T51n2067_009:0042a11_30": "及至寺門。",
    "T51n2067_009:0042a11_31": "乃見一騎投門。",
    "T51n2067_009:0042a11_32": "又西走欲入開善寺。",
    "T51n2067_009:0042a12_33": "又合騎投門。",
    "T51n2067_009:0042a12_34": "遂爾相從而奔。",
    "T51n2067_009:0042a12_35": "欲還本宅。",
    "T51n2067_009:0042a13_36": "宅在化度寺東。",
    "T51n2067_009:0042a13_37": "恐道遠。",
    "T51n2067_009:0042a13_38": "乃欲入醴泉坊。",
    "T51n2067_009:0042a14_39": "一騎在前。",
    "T51n2067_009:0042a14_40": "其人以拳擊之。",
    "T51n2067_009:0042a14_41": "鬼遂落馬。",
    "T51n2067_009:0042a14_42": "後鬼曰。",
    "T51n2067_009:0042a15_43": "此人大麁。",
    "T51n2067_009:0042a15_44": "急曳下。",
    "T51n2067_009:0042a15_45": "挽却頭髮。",
    "T51n2067_009:0042a15_46": "即被牽髮。",
    "T51n2067_009:0042a16_0": "如刀割狀。",
    "T51n2067_009:0042a16_1": "又有朱衣白馬人。",
    "T51n2067_009:0042a16_2": "以手柘敬胸。",
    "T51n2067_009:0042a16_3": "敬應時落馬顛仆。",
    "T51n2067_009:0042a17_4": "久之稍醒。",
    "T51n2067_009:0042a17_5": "若坐霧中。",
    "T51n2067_009:0042a17_6": "家人輿還。",
    "T51n2067_009:0042a18_7": "至曉穌云。",
    "T51n2067_009:0042a18_8": "備見閻羅王。",
    "T51n2067_009:0042a18_9": "云君何盜僧果子。",
    "T51n2067_009:0042a19_0": "何事說三寶過。",
    "T51n2067_009:0042a19_1": "遂依狀罪。",
    "T51n2067_009:0042a19_2": "無敢厝言。",
    "T51n2067_009:0042a19_3": "王言。",
    "T51n2067_009:0042a19_4": "盜果之罪。",
    "T51n2067_009:0042a20_5": "合吞鐵丸四百五十枚。",
    "T51n2067_009:0042a20_6": "四年受之方盡。",
    "T51n2067_009:0042a21_7": "說過之罪。",
    "T51n2067_009:0042a21_8": "合耕其舌。",
    "T51n2067_009:0042a21_9": "因放令出。",
    "T51n2067_009:0042a21_10": "遂穌。",
    "T51n2067_009:0042a21_11": "俄自見有人頭有雙角。",
    "T51n2067_009:0042a22_12": "棒一鐵丸。",
    "T51n2067_009:0042a22_13": "縛敬手足。",
    "T51n2067_009:0042a22_14": "令一一噉之。",
    "T51n2067_009:0042a23_15": "傍人不見鐵丸。",
    "T51n2067_009:0042a23_16": "唯見敬張口努目。",
    "T51n2067_009:0042a24_0": "通身赫赤。",
    "T51n2067_009:0042a24_1": "喉內熱氣上衝。",
    "T51n2067_009:0042a24_2": "蒸欝難近。",
    "T51n2067_009:0042a24_3": "經日方醒云。",
    "T51n2067_009:0042a25_4": "已一年吞百餘丸。",
    "T51n2067_009:0042a25_5": "其若無此經四日如此。",
    "T51n2067_009:0042a26_6": "吞丸云盡。",
    "T51n2067_009:0042a26_7": "即就會昌化度二寺。",
    "T51n2067_009:0042a26_8": "投誠懺悔至三月三日。",
    "T51n2067_009:0042a27_9": "又被前使追將見王。",
    "T51n2067_009:0042a27_10": "王曰。",
    "T51n2067_009:0042a28_0": "爾誹謗三寶。",
    "T51n2067_009:0042a28_1": "罪當耕舌。",
    "T51n2067_009:0042a28_2": "敬又見二人。",
    "T51n2067_009:0042a28_3": "以鉗拔舌。",
    "T51n2067_009:0042a29_4": "似長數百尺。",
    "T51n2067_009:0042a29_5": "又見二人。",
    "T51n2067_009:0042a29_6": "各執一耜刃。",
    "T51n2067_009:0042a29_7": "偶耕其上。",
    "T51n2067_009:0042b01_8": "勘案乃云。",
    "T51n2067_009:0042b01_9": "嘗讀法華金剛般若。",
    "T51n2067_009:0042b01_10": "因爾得蘇。",
    "T51n2067_009:0042b02_11": "親等視其舌上。",
    "T51n2067_009:0042b02_12": "若刀割處。",
    "T51n2067_009:0042b02_13": "為讀二經。",
    "T51n2067_009:0042b02_14": "所以不斷。",
    "T51n2067_009:0042b03_15": "敬後若思若說。",
    "T51n2067_009:0042b03_16": "戰怖流淚。",
    "T51n2067_009:0042b03_17": "因遂出家。",
    "T51n2067_009:0042b04_18": "名法眼。",
    "T51n2067_009:0042b04_19": "精厲倍常。",
    "T51n2067_009:0042b04_20": "住東都白馬寺。",
    "T51n2067_009:0042b04_21": "不知所終。",
    "T51n2067_009:0042b06_0": "劉時。",
    "T51n2067_009:0042b06_1": "雍州萬年縣平康坊人。",
    "T51n2067_009:0042b06_2": "永隆二年六月患。",
    "T51n2067_009:0042b07_3": "經二日致死。",
    "T51n2067_009:0042b07_4": "死經六日。",
    "T51n2067_009:0042b07_5": "唯心上煖。",
    "T51n2067_009:0042b07_6": "其家已擇殯日。",
    "T51n2067_009:0042b08_7": "未敢襲斂。",
    "T51n2067_009:0042b08_8": "至七日平旦。",
    "T51n2067_009:0042b08_9": "忽然再穌云。",
    "T51n2067_009:0042b09_0": "當時。",
    "T51n2067_009:0042b09_1": "被一人引入大城。",
    "T51n2067_009:0042b09_2": "宮殿樓觀。",
    "T51n2067_009:0042b09_3": "壯麗異常。",
    "T51n2067_009:0042b10_4": "見閻羅王。",
    "T51n2067_009:0042b10_5": "云汝可具錄生時功德。",
    "T51n2067_009:0042b10_6": "遂答云。",
    "T51n2067_009:0042b11_0": "生時唯讀法華經兩卷。",
    "T51n2067_009:0042b11_1": "更無別功德。",
    "T51n2067_009:0042b11_2": "王遂索罪案。",
    "T51n2067_009:0042b12_3": "及業秤秤之。",
    "T51n2067_009:0042b12_4": "法華兩卷。",
    "T51n2067_009:0042b12_5": "乃重於罪案。",
    "T51n2067_009:0042b12_6": "王撿案云。",
    "T51n2067_009:0042b13_7": "其人合得九十年活。",
    "T51n2067_009:0042b13_8": "謂案典曰。",
    "T51n2067_009:0042b13_9": "汝何以錯追。",
    "T51n2067_009:0042b14_10": "大罪過。",
    "T51n2067_009:0042b14_11": "可放他還。",
    "T51n2067_009:0042b14_12": "因令得活。",
    "T51n2067_009:0042b14_13": "經二十許日。",
    "T51n2067_009:0042b15_14": "委頓方療。",
    "T51n2067_009:0042b15_15": "遂受戒。",
    "T51n2067_009:0042b15_16": "不飲酒食肉。",
    "T51n2067_009:0042b15_17": "造金字法華經。",
    "T51n2067_009:0042b16_18": "永充供養。",
    "T51n2067_009:0042b17_0": "弘贊法華傳卷第九"
}