{
    "T47n1973_009:0341c16_0": "廬山蓮宗寶鑑念佛正報卷第九",
    "T47n1973_009:0341c18_0": "念佛正報說",
    "T47n1973_009:0341c19_0": "因修白業果感淨方。",
    "T47n1973_009:0341c19_1": "化佛引上金臺聖賢迎歸樂國。",
    "T47n1973_009:0341c20_2": "高超三界逈出四流。",
    "T47n1973_009:0341c20_3": "業盡塵消亡情絕慮。",
    "T47n1973_009:0341c21_4": "質托蓮苞之內神遊寶界之中。",
    "T47n1973_009:0341c21_5": "面奉阿彌陀佛為本師。",
    "T47n1973_009:0341c22_6": "得見觀音勢至為親友。",
    "T47n1973_009:0341c22_7": "清淨海眾大會寶池。",
    "T47n1973_009:0341c23_8": "九品勝流各說本行。",
    "T47n1973_009:0341c23_9": "五香拂體三德嚴身。",
    "T47n1973_009:0341c24_10": "暫扇微風聆眾音之演法。",
    "T47n1973_009:0341c24_11": "繽紛花雨覩焰網之舒光。",
    "T47n1973_009:0341c25_12": "縹緲雲霞近浮神足輕。",
    "T47n1973_009:0341c26_0": "盈衣裓盛接妙華。",
    "T47n1973_009:0341c26_1": "晨謁慈顏得法印而還國。",
    "T47n1973_009:0341c27_0": "暮遊金剎聽玉偈以逍遙。",
    "T47n1973_009:0341c27_1": "瑞蓮初綻為遣殘殃。",
    "T47n1973_009:0341c28_2": "新學化生行成不退。",
    "T47n1973_009:0341c28_3": "豈惟近忘麁苦抑亦佛果非遙。",
    "T47n1973_009:0341c29_4": "戲翫瓊林灌沐德水百寶之樓閣華麗七重之行樹森嚴。",
    "T47n1973_009:0342a01_5": "景序長春地平如掌。",
    "T47n1973_009:0342a02_0": "衣食隨念而至。",
    "T47n1973_009:0342a02_1": "天樂不鼓自鳴受用。",
    "T47n1973_009:0342a02_2": "出於自然快樂。",
    "T47n1973_009:0342a03_3": "實非人世諸天萬億倍不可比論。",
    "T47n1973_009:0342a03_4": "諸佛恒河沙悉皆稱讚。",
    "T47n1973_009:0342a04_5": "身具光明妙相跡踐聖道香階。",
    "T47n1973_009:0342a05_6": "壽命難量悲願無盡。",
    "T47n1973_009:0342a05_7": "捨兩重生死既非果趣之身。",
    "T47n1973_009:0342a06_8": "獲本際常光離去來之相。",
    "T47n1973_009:0342a06_9": "緣強德勝皆由念佛心生。",
    "T47n1973_009:0342a07_10": "福備壽長盡是淨因感報。",
    "T47n1973_009:0342a08_11": "故知佛有攝生之願。",
    "T47n1973_009:0342a08_12": "生有感佛之因。",
    "T47n1973_009:0342a08_13": "如是勝緣起於信願。",
    "T47n1973_009:0342a09_14": "以斯妙果成就正依。",
    "T47n1973_009:0342a09_15": "或禪誦七寶池邊。",
    "T47n1973_009:0342a10_16": "或經行黃金地上。",
    "T47n1973_009:0342a10_17": "飽禪悅法喜珍味。",
    "T47n1973_009:0342a11_18": "掛慈悲喜捨天衣。",
    "T47n1973_009:0342a11_19": "功德資神增加悲智。",
    "T47n1973_009:0342a11_20": "雍容辦道長養聖胎。",
    "T47n1973_009:0342a12_21": "入無生門。",
    "T47n1973_009:0342a12_22": "便登菩薩之位。",
    "T47n1973_009:0342a13_0": "得阿跋致不退菩提之心。",
    "T47n1973_009:0342a13_1": "住法王家盡授如來之記。",
    "T47n1973_009:0342a14_2": "聞大乘法同稱補處之尊。",
    "T47n1973_009:0342a14_3": "念念虛玄心心靜慮。",
    "T47n1973_009:0342a15_4": "得三昧正定具六種神通。",
    "T47n1973_009:0342a15_5": "獻供十方往來無礙。",
    "T47n1973_009:0342a16_6": "分身億剎不失定心。",
    "T47n1973_009:0342a16_7": "洒法水於三千出眾生於火宅。",
    "T47n1973_009:0342a17_8": "自他兼利行願周圓。",
    "T47n1973_009:0342a17_9": "可謂百千三昧盡唯心。",
    "T47n1973_009:0342a18_10": "功德莊嚴歸自己。",
    "T47n1973_009:0342a19_0": "功德莊嚴",
    "T47n1973_009:0342a20_0": "大彌陀經菩薩功德章云。",
    "T47n1973_009:0342a20_1": "往生彼國者皆悉容貌柔和相好具足。",
    "T47n1973_009:0342a21_2": "禪定智慧通達無礙。",
    "T47n1973_009:0342a21_3": "神通威德無不圓滿。",
    "T47n1973_009:0342a22_4": "深入法門具無生忍。",
    "T47n1973_009:0342a22_5": "諸佛祕藏究竟明了。",
    "T47n1973_009:0342a23_6": "調伏諸根身心柔軟。",
    "T47n1973_009:0342a23_7": "安然寂靜盡般泥洹。",
    "T47n1973_009:0342a24_8": "深入正慧無有餘習。",
    "T47n1973_009:0342a24_9": "依佛所行七覺聖道。",
    "T47n1973_009:0342a25_10": "修行五眼照真達俗。",
    "T47n1973_009:0342a25_11": "辯才總持自在無礙。",
    "T47n1973_009:0342a26_12": "善解世間無邊方便。",
    "T47n1973_009:0342a26_13": "所言誠諦深入義味。",
    "T47n1973_009:0342a27_14": "敷演正法度諸有情。",
    "T47n1973_009:0342a27_15": "等觀三界空無所有。",
    "T47n1973_009:0342a28_16": "知一切法無相無為。",
    "T47n1973_009:0342a28_17": "無取無捨遠離顛倒。",
    "T47n1973_009:0342a29_0": "堅固不動如須彌山。",
    "T47n1973_009:0342a29_1": "智明如日廣大如海出功德寶。",
    "T47n1973_009:0342b01_2": "熾盛如火燒煩惱薪。",
    "T47n1973_009:0342b01_3": "忍辱如地一切平等。",
    "T47n1973_009:0342b02_4": "清淨如水洗諸塵垢。",
    "T47n1973_009:0342b02_5": "如虛空無邊不障一切故。",
    "T47n1973_009:0342b03_6": "如蓮花出水離一切染故。",
    "T47n1973_009:0342b03_7": "如雷震響出法音故。",
    "T47n1973_009:0342b04_8": "如雲靉靆降法雨故。",
    "T47n1973_009:0342b04_9": "如風動樹發菩提芽故。",
    "T47n1973_009:0342b05_10": "如牛王聲異眾牛故。",
    "T47n1973_009:0342b05_11": "如龍象威難可測故。",
    "T47n1973_009:0342b06_12": "如良馬行乘無失故。",
    "T47n1973_009:0342b06_13": "如獅子王無怖畏故。",
    "T47n1973_009:0342b07_14": "如尼拘律樹覆蔭大故。",
    "T47n1973_009:0342b07_15": "如優鉢羅華難值遇故。",
    "T47n1973_009:0342b08_16": "如金剛杵破邪山故。",
    "T47n1973_009:0342b08_17": "如梵王身生梵眾故。",
    "T47n1973_009:0342b09_18": "如金翅鳥勝毒龍故。",
    "T47n1973_009:0342b09_19": "如空中禽無住跡故。",
    "T47n1973_009:0342b10_20": "如雪山照功德淨故。",
    "T47n1973_009:0342b10_21": "如慈氏觀法界等故。",
    "T47n1973_009:0342b11_0": "專樂求法心無厭足。",
    "T47n1973_009:0342b11_1": "常欲廣說志無疲倦。",
    "T47n1973_009:0342b11_2": "擊法鼓建法幢。",
    "T47n1973_009:0342b12_3": "曜慧日除癡冥修六和敬。",
    "T47n1973_009:0342b12_4": "常為師導為世明燈。",
    "T47n1973_009:0342b13_5": "最勝福田以安群生。",
    "T47n1973_009:0342b13_6": "功慧殊勝莫不尊重。",
    "T47n1973_009:0342b14_7": "恭敬供養無量諸佛。",
    "T47n1973_009:0342b14_8": "常為諸佛所共讚嘆。",
    "T47n1973_009:0342b15_9": "究竟菩薩諸波羅蜜。",
    "T47n1973_009:0342b15_10": "遠離聲聞緣覺之地。",
    "T47n1973_009:0342b16_11": "佛告阿難。",
    "T47n1973_009:0342b16_12": "彼諸菩薩以念佛故。",
    "T47n1973_009:0342b16_13": "成就如是無量功德。",
    "T47n1973_009:0342b17_14": "我但為汝舉要言之。",
    "T47n1973_009:0342b17_15": "若廣說者雖盡億劫不能窮盡。",
    "T47n1973_009:0342b19_0": "淨土增修聖果",
    "T47n1973_009:0342b20_0": "大彌陀經云。",
    "T47n1973_009:0342b20_1": "諸念佛人生淨土已。",
    "T47n1973_009:0342b20_2": "即入七寶池中澡雪形體。",
    "T47n1973_009:0342b21_3": "蕩滌情慮各座一華上。",
    "T47n1973_009:0342b21_4": "自然微風吹動諸寶行樹。",
    "T47n1973_009:0342b22_5": "出微妙音散諸寶華。",
    "T47n1973_009:0342b22_6": "異香芬馥皆作佛事。",
    "T47n1973_009:0342b23_7": "聞者喜悅無量。",
    "T47n1973_009:0342b23_8": "自然心開各往修進。",
    "T47n1973_009:0342b24_9": "有在地講經者。",
    "T47n1973_009:0342b24_10": "有在地誦經者。",
    "T47n1973_009:0342b24_11": "有在地說經者。",
    "T47n1973_009:0342b25_12": "有在地口授經者。",
    "T47n1973_009:0342b25_13": "有在地聽經者。",
    "T47n1973_009:0342b26_14": "有在地念經者。",
    "T47n1973_009:0342b26_15": "有在地思道者。",
    "T47n1973_009:0342b26_16": "有在地坐禪一心者。",
    "T47n1973_009:0342b27_17": "有在地經行者。",
    "T47n1973_009:0342b27_18": "有在虛空中講經者。",
    "T47n1973_009:0342b28_19": "有在虛空中誦經者。",
    "T47n1973_009:0342b28_20": "有在虛空中說經者。",
    "T47n1973_009:0342b29_0": "有在虛空中口授經者。",
    "T47n1973_009:0342b29_1": "有在虛空中聽經者。",
    "T47n1973_009:0342c01_0": "有在虛空中。",
    "T47n1973_009:0342c01_1": "念經者。",
    "T47n1973_009:0342c01_2": "有在虛空中思道者。",
    "T47n1973_009:0342c01_3": "有在虛空中坐禪一心者。",
    "T47n1973_009:0342c02_4": "有在虛空中經行者。",
    "T47n1973_009:0342c03_0": "其間聲聞弟子皆發大心。",
    "T47n1973_009:0342c03_1": "有未得聖果者。",
    "T47n1973_009:0342c03_2": "因是而得聖果。",
    "T47n1973_009:0342c04_3": "有未得不退轉地者。",
    "T47n1973_009:0342c04_4": "因是而得不退轉地。",
    "T47n1973_009:0342c05_5": "菩薩各隨其資而有所得。",
    "T47n1973_009:0342c05_6": "莫不忻然適意而悅。",
    "T47n1973_009:0342c06_7": "遊戲三昧利樂有情。",
    "T47n1973_009:0342c06_8": "由念佛之堅心稱彌陀之本願。",
    "T47n1973_009:0342c07_9": "往生佛子同列此班。",
    "T47n1973_009:0342c07_10": "智慧辯才神通如意風帆勢順速證菩提。",
    "T47n1973_009:0342c08_11": "超萬劫之輪迴。",
    "T47n1973_009:0342c09_12": "得諸天之仰重。",
    "T47n1973_009:0342c09_13": "淨業勝善大果昭然。",
    "T47n1973_009:0342c10_14": "寄語同流無忘此事。",
    "T47n1973_009:0342c10_15": "蝡動蜎飛猶有分。",
    "T47n1973_009:0342c10_16": "大丈夫兒當勉旃。",
    "T47n1973_009:0342c12_0": "淨土三十益",
    "T47n1973_009:0342c13_0": "天台智者大師淨土群疑論云。",
    "T47n1973_009:0342c13_1": "生西方者有三十種益。",
    "T47n1973_009:0342c14_2": "一往生佛土益。",
    "T47n1973_009:0342c14_3": "二得大法樂益。",
    "T47n1973_009:0342c14_4": "三親近諸佛益。",
    "T47n1973_009:0342c15_5": "四遊歷十方供佛益。",
    "T47n1973_009:0342c15_6": "五親聞佛說益。",
    "T47n1973_009:0342c16_7": "六福慧資糧疾得圓滿益。",
    "T47n1973_009:0342c16_8": "七速證菩提益。",
    "T47n1973_009:0342c17_9": "八諸天人等同集一會益。",
    "T47n1973_009:0342c17_10": "九無退轉益。",
    "T47n1973_009:0342c17_11": "十無量行願增進益。",
    "T47n1973_009:0342c18_12": "十一鸚鵡舍利宣揚法音益。",
    "T47n1973_009:0342c19_13": "十二風樹樂響益。",
    "T47n1973_009:0342c19_14": "十三摩尼水漩演苦空益。",
    "T47n1973_009:0342c20_15": "十四諸樂奏妙音益。",
    "T47n1973_009:0342c20_16": "十五四十八願益。",
    "T47n1973_009:0342c20_17": "十六真金色身益。",
    "T47n1973_009:0342c21_18": "十七形無醜陋益。",
    "T47n1973_009:0342c21_19": "十八具足六通益。",
    "T47n1973_009:0342c22_20": "十九常住定聚益。",
    "T47n1973_009:0342c22_21": "二十無諸不善益。",
    "T47n1973_009:0342c23_0": "二十一壽命長遠益。",
    "T47n1973_009:0342c23_1": "二十二衣食自然益。",
    "T47n1973_009:0342c23_2": "二十三唯受眾樂益。",
    "T47n1973_009:0342c24_3": "二十四三十二相益。",
    "T47n1973_009:0342c24_4": "二十五實無女人益。",
    "T47n1973_009:0342c25_5": "二十六無有小乘益。",
    "T47n1973_009:0342c25_6": "二十七離於八難益。",
    "T47n1973_009:0342c26_7": "二十八得三法忍益。",
    "T47n1973_009:0342c26_8": "二十九身常有光益。",
    "T47n1973_009:0342c27_9": "三十得那羅延身力益。",
    "T47n1973_009:0342c27_10": "可謂處處菩提道明明功德林。",
    "T47n1973_009:0342c29_0": "淨土成佛",
    "T47n1973_009:0343a01_0": "金剛定後菩薩因圓。",
    "T47n1973_009:0343a01_1": "解脫道中如來果滿。",
    "T47n1973_009:0343a01_2": "具四無量心得四無礙辯。",
    "T47n1973_009:0343a02_3": "十八種法不共二乘。",
    "T47n1973_009:0343a03_0": "十力現前說法無畏。",
    "T47n1973_009:0343a03_1": "塵沙或盡萬行功成。",
    "T47n1973_009:0343a03_2": "十號俱彰三身圓顯。",
    "T47n1973_009:0343a04_3": "具九十七種大人相。",
    "T47n1973_009:0343a04_4": "放八萬四千大光明。",
    "T47n1973_009:0343a05_5": "悲智俱融福慧雙足。",
    "T47n1973_009:0343a05_6": "現居十重報土能垂萬類化身。",
    "T47n1973_009:0343a06_7": "布大慈雲雨大法雨。",
    "T47n1973_009:0343a07_0": "滂流法界潤澤群生。",
    "T47n1973_009:0343a07_1": "咸悟本心同成正覺○選佛若無如是眼。",
    "T47n1973_009:0343a08_2": "宗風那得到如今。",
    "T47n1973_009:0343a09_0": "廬山蓮宗寶鑑念佛正報卷第九(終)"
}