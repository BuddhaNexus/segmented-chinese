[
    {
        "source_sentence": "金輪王佛頂要略念誦法",
        "from": "T19n0948_001:0189a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開府儀同三司特進試鴻臚卿肅國",
        "from": "T19n0948_001:0189a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "公食邑三千戶賜紫贈司空謚大鑒",
        "from": "T19n0948_001:0189a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正號大廣智大興善寺三藏沙門不空奉　詔譯諸供養儀軌。",
        "from": "T19n0948_001:0189a09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如餘經中廣說。",
        "from": "T19n0948_001:0189a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今但晨暮修行。",
        "from": "T19n0948_001:0189a10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或四時三時常習不間故。",
        "from": "T19n0948_001:0189a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "略去重疊簡其要略。",
        "from": "T19n0948_001:0189a11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者欲作諸佛頂念誦。",
        "from": "T19n0948_001:0189a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先結三部心印及誦真言。",
        "from": "T19n0948_001:0189a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持三業。",
        "from": "T19n0948_001:0189a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部心印。",
        "from": "T19n0948_001:0189a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手右押左內相叉。",
        "from": "T19n0948_001:0189a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二輪並竪真言曰。",
        "from": "T19n0948_001:0189a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵爾慈以反下同曩爾翼去迦半音次結蓮華部心印。",
        "from": "T19n0948_001:0189a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前印以左輪屈入掌真言曰。",
        "from": "T19n0948_001:0189a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵阿去引嚕轉舌引力迦半音次結金剛部心印。",
        "from": "T19n0948_001:0189a18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前佛部心印。",
        "from": "T19n0948_001:0189a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈右輪入掌真言曰。",
        "from": "T19n0948_001:0189a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合引地力二合迦半音次結如來拳印。",
        "from": "T19n0948_001:0189a21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手蓋光高勝四指。",
        "from": "T19n0948_001:0189a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "握拳竪左輪。",
        "from": "T19n0948_001:0189a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手作金剛拳。",
        "from": "T19n0948_001:0189a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "握左輪甲真言曰。",
        "from": "T19n0948_001:0189a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵僕引欠入嚩二合囉吽引胸喉中聲如牛吼隨誦真言。",
        "from": "T19n0948_001:0189a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印加持自身五處。",
        "from": "T19n0948_001:0189a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身器清淨與法相應。",
        "from": "T19n0948_001:0189a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便以印加持道場中地。",
        "from": "T19n0948_001:0189a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦真言七遍。",
        "from": "T19n0948_001:0189a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其處變成金剛界宮。",
        "from": "T19n0948_001:0189a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自然而有眾寶。",
        "from": "T19n0948_001:0189a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嚴飾如佛淨土。",
        "from": "T19n0948_001:0189a27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結被金剛甲冑護身印。",
        "from": "T19n0948_001:0189a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前佛部心印。",
        "from": "T19n0948_001:0189a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二光直竪頭相拄。",
        "from": "T19n0948_001:0189a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈上節如劍形。",
        "from": "T19n0948_001:0189a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二蓋各附二光背。",
        "from": "T19n0948_001:0189b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勿相著。",
        "from": "T19n0948_001:0189b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印加持額上右肩左肩心喉五處。",
        "from": "T19n0948_001:0189b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各誦一遍真言曰。",
        "from": "T19n0948_001:0189b02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一斫羯囉二合𮧬轉舌㗚底二合鉢囉二合捨弭多二囉捺囉三合引囉捺囉二合引三跋娑麼二合攃倉辣反路瑟抳二合灑四囉乞灑二合囉乞灑二合𤚥引五吽引發吒上普鉢反下吒半音娑嚩二合引賀引六次結迎請聖眾印。",
        "from": "T19n0948_001:0189b08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手仰相叉。",
        "from": "T19n0948_001:0189b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二蓋頭相拄如車輅。",
        "from": "T19n0948_001:0189b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨誦真言。",
        "from": "T19n0948_001:0189b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二輪各撥二光。",
        "from": "T19n0948_001:0189b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向身招之或三或七。",
        "from": "T19n0948_001:0189b10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想諸聖眾乘此車輅來降道場。",
        "from": "T19n0948_001:0189b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎請真言曰。",
        "from": "T19n0948_001:0189b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜麼娑怛㘑三合轉舌引野一地尾二合迦南二薩嚩怛他去引誐跢引南三唵嚩日囉二合儗霓以反孃四羯囉灑二合野娑嚩二合引賀引五次結辦事佛頂印。",
        "from": "T19n0948_001:0189b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除結界。",
        "from": "T19n0948_001:0189b15_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前佛部心印。",
        "from": "T19n0948_001:0189b15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "直竪二光頭相柱。",
        "from": "T19n0948_001:0189b16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "屈上節如鉤。",
        "from": "T19n0948_001:0189b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨誦真言以印頂上左轉三匝。",
        "from": "T19n0948_001:0189b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除一切不祥諸作障者。",
        "from": "T19n0948_001:0189b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便右旋三匝。",
        "from": "T19n0948_001:0189b18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成結界辦事真言曰。",
        "from": "T19n0948_001:0189b18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三去滿多沒馱引南一唵吒嚕唵三合滿馱娑嚩二合引賀引次結大三昧耶印即前被甲印二。",
        "from": "T19n0948_001:0189b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋稍開如杵形。",
        "from": "T19n0948_001:0189b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二輪各附二蓋下第一文真言曰。",
        "from": "T19n0948_001:0189b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵餉商障反迦隷轉舌一摩賀引三去麼鼻音閻娑嚩二合引賀隨誦真言。",
        "from": "T19n0948_001:0189b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印准前右旋三匝。",
        "from": "T19n0948_001:0189b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨行人意遠近。",
        "from": "T19n0948_001:0189b26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結為大界。",
        "from": "T19n0948_001:0189b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結部母佛眼尊印。",
        "from": "T19n0948_001:0189b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌以二蓋各捻二光背。",
        "from": "T19n0948_001:0189b28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令如眼形。",
        "from": "T19n0948_001:0189b28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雙屈二輪入掌真言曰。",
        "from": "T19n0948_001:0189b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三去滿多沒馱引南一唵嚕嚕二字皆轉舌娑普二合嚕二入嚩二合羅底瑟咤二合三悉馱路引左寧四薩嚩引囉他二合五娑去引馱𩕳寧頂反娑嚩二合引賀引次結本尊頂輪王印。",
        "from": "T19n0948_001:0189c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前辦事佛頂印。",
        "from": "T19n0948_001:0189c05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二輪並竪。",
        "from": "T19n0948_001:0189c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二蓋平屈兩節頭相拄。",
        "from": "T19n0948_001:0189c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於二輪甲上。",
        "from": "T19n0948_001:0189c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結印當心誦真言七遍或一百八遍。",
        "from": "T19n0948_001:0189c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又加持身五處各一遍。",
        "from": "T19n0948_001:0189c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持力故。",
        "from": "T19n0948_001:0189c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身與本尊合為一體。",
        "from": "T19n0948_001:0189c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一字輪王陀羅尼曰。",
        "from": "T19n0948_001:0189c09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三去滿多母馱南勃嚕唵三合嚕字彈舌為一音又引聲從胸喉中出其音如擊大鼓古譯云步林者訛略不正也次結獻閼伽香水印。",
        "from": "T19n0948_001:0189c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前大三昧耶印。",
        "from": "T19n0948_001:0189c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二蓋附著二光背。",
        "from": "T19n0948_001:0189c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二輪又安二蓋側下第一文。",
        "from": "T19n0948_001:0189c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如商佉羸盃形。",
        "from": "T19n0948_001:0189c14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想印中滿盛香水。",
        "from": "T19n0948_001:0189c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉印額齊。",
        "from": "T19n0948_001:0189c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉獻香水。",
        "from": "T19n0948_001:0189c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "澡浴本尊及諸聖眾真言曰。",
        "from": "T19n0948_001:0189c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三滿多沒馱引南一唵遏轉舌伽去囉賀二合遏伽去二苾哩二合野三鉢囉二合底丁以反引砌那沫轉舌儉娑嚩二合引賀引次結普通供養印。",
        "from": "T19n0948_001:0190a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手虛心合掌。",
        "from": "T19n0948_001:0190a01_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右五頂各交上節。",
        "from": "T19n0948_001:0190a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想從印流出無量香花飲食宮殿衣服。",
        "from": "T19n0948_001:0190a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養及諸聖眾真言曰。",
        "from": "T19n0948_001:0190a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫薩嚩沒馱一冒引地娑怛嚩二合引南二唵薩嚩怛囉二合三僧去矩蘇弭跢引四毘吉孃二合囉引始𩕳五曩謨娑覩二合帝娑嚩二合引賀引六次結普通佛頂印。",
        "from": "T19n0948_001:0190a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即前普供養印稍深交至中節。",
        "from": "T19n0948_001:0190a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如花在掌中。",
        "from": "T19n0948_001:0190a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修行者若為事緣怱速。",
        "from": "T19n0948_001:0190a09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不能遍結十佛頂印。",
        "from": "T19n0948_001:0190a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但結此印誦諸佛頂真言。",
        "from": "T19n0948_001:0190a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普通。",
        "from": "T19n0948_001:0190a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於修行人亦無過失真言曰。",
        "from": "T19n0948_001:0190a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "娜莫三去滿多母馱引南一麼鼻聲鉢囉二合底賀多舍引娑上曩引南二唵斫訖囉二合𮧬轉舌底唵吽引三次誦讚嘆。",
        "from": "T19n0948_001:0190a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿寗寧定切引史抳尼整反引薩嚩惹白攞反𦽆言揭反地帶引史抳一拽延結切捨娑尾二合步引轉舌囉步二合嚩乃鼻音迦滿引馱吠敷閉反二三去麼鼻娑多二合尾儞也二合引地跛作訖囉二合麼鼻引里寧三曩謨娑覩二合帝怛囉二合引怛哩作訖囉二合𮧬轉舌底丁以反寧四每念誦先。",
        "from": "T19n0948_001:0190a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以五支。",
        "from": "T19n0948_001:0190a22_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以五相八相等觀智。",
        "from": "T19n0948_001:0190a22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成本尊瑜伽此法並在頂輪瑜伽極深密一一皆須從灌頂阿闍梨親受或於自身。",
        "from": "T19n0948_001:0190a24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想布一字安三處頂舌心以字威力能成佛頂輪王尊。",
        "from": "T19n0948_001:0190a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想曼茶攞中有香水大海。",
        "from": "T19n0948_001:0190a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於海中心有妙高山。",
        "from": "T19n0948_001:0190a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七重金山周匝圍遶。",
        "from": "T19n0948_001:0190a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於妙高頂上有八葉白色蓮華。",
        "from": "T19n0948_001:0190a27_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一一葉上。",
        "from": "T19n0948_001:0190a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋布列輪王七寶。",
        "from": "T19n0948_001:0190a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂金輪象馬珠女兵及主藏。",
        "from": "T19n0948_001:0190b01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當前第八葉。",
        "from": "T19n0948_001:0190b01_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想安佛眼尊。",
        "from": "T19n0948_001:0190b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十佛頂眷屬前後圍遶。",
        "from": "T19n0948_001:0190b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先住此觀已。",
        "from": "T19n0948_001:0190b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後持珠相應念誦。",
        "from": "T19n0948_001:0190b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或百或千或至於萬。",
        "from": "T19n0948_001:0190b03_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常功限畢。",
        "from": "T19n0948_001:0190b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧珠頂戴誦部母尊。",
        "from": "T19n0948_001:0190b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有功業願尊守護。",
        "from": "T19n0948_001:0190b04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結根本印加身五處。",
        "from": "T19n0948_001:0190b05_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結普供養印如前供養。",
        "from": "T19n0948_001:0190b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以悅憙歌讚本尊。",
        "from": "T19n0948_001:0190b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量悲願攝護我等。",
        "from": "T19n0948_001:0190b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得解脫悉地相應。",
        "from": "T19n0948_001:0190b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣發弘願利樂有情誓成正覺。",
        "from": "T19n0948_001:0190b07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次捧閼伽如前奉獻。",
        "from": "T19n0948_001:0190b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結辦事佛頂印。",
        "from": "T19n0948_001:0190b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左旋解界。",
        "from": "T19n0948_001:0190b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結前迎請印。",
        "from": "T19n0948_001:0190b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向外撥二中指。",
        "from": "T19n0948_001:0190b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前真言去羯羅灑野句。",
        "from": "T19n0948_001:0190b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應云尾薩惹野。",
        "from": "T19n0948_001:0190b10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即成奉送。",
        "from": "T19n0948_001:0190b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結被甲印誦前真言加身五處。",
        "from": "T19n0948_001:0190b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又結三部心印。",
        "from": "T19n0948_001:0190b11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虔誠作禮發願。",
        "from": "T19n0948_001:0190b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任出道場或旋繞經行。",
        "from": "T19n0948_001:0190b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉讀大乘經典。",
        "from": "T19n0948_001:0190b13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作諸善業以助成就。",
        "from": "T19n0948_001:0190b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金輪王佛頂要略念誦法",
        "from": "T19n0948_001:0190b14_100",
        "context_with_next_sentence": false
    }
]