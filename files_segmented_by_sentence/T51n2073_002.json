{
    "T51n2073_002:0158a08_0": "華嚴經傳記卷第二",
    "T51n2073_002:0158a10_0": "京兆崇福寺僧沙門法藏集",
    "T51n2073_002:0158a11_0": "講解第六上",
    "T51n2073_002:0158a12_0": "東晉南林釋法業",
    "T51n2073_002:0158a13_0": "宋京師中興寺求那跋陀羅",
    "T51n2073_002:0158a14_0": "魏中天竺勒那摩提",
    "T51n2073_002:0158a15_0": "魏北臺釋智炬",
    "T51n2073_002:0158a16_0": "齊鄴下大覺寺釋慧光",
    "T51n2073_002:0158a17_0": "齊鄴下大覺寺釋僧範",
    "T51n2073_002:0158a18_0": "齊治州釋曇衍",
    "T51n2073_002:0158a19_0": "隋相州演空寺釋靈裕",
    "T51n2073_002:0158a20_0": "隋西京空觀寺釋慧藏",
    "T51n2073_002:0158a21_0": "隋西京大禪定寺釋靈幹",
    "T51n2073_002:0158a22_0": "釋法業未詳其氏族。",
    "T51n2073_002:0158a22_1": "幼而有超方之韻。",
    "T51n2073_002:0158a22_2": "脫屣塵表。",
    "T51n2073_002:0158a23_3": "少年出家。",
    "T51n2073_002:0158a23_4": "風格秀整。",
    "T51n2073_002:0158a23_5": "學無常師。",
    "T51n2073_002:0158a23_6": "博洽覃思。",
    "T51n2073_002:0158a24_7": "時輩所推也。",
    "T51n2073_002:0158a24_8": "雖遍閱群部。",
    "T51n2073_002:0158a24_9": "每以為。",
    "T51n2073_002:0158a24_10": "照極探微。",
    "T51n2073_002:0158a25_11": "快然未足。",
    "T51n2073_002:0158a25_12": "後遇天竺沙門佛度跋陀羅。",
    "T51n2073_002:0158a25_13": "乃請譯華嚴。",
    "T51n2073_002:0158a26_14": "親從筆受。",
    "T51n2073_002:0158a26_15": "籌諮義理。",
    "T51n2073_002:0158a26_16": "無替晨夕。",
    "T51n2073_002:0158a26_17": "經數歲。",
    "T51n2073_002:0158a27_18": "廓焉有所悟。",
    "T51n2073_002:0158a27_19": "因顧其友人曰。",
    "T51n2073_002:0158a27_20": "聖教司南。",
    "T51n2073_002:0158a28_0": "於是乎在。",
    "T51n2073_002:0158a28_1": "既躬受梵文。",
    "T51n2073_002:0158a28_2": "又陶冶精至。",
    "T51n2073_002:0158a28_3": "推宗扣問。",
    "T51n2073_002:0158a29_4": "日有其倫。",
    "T51n2073_002:0158a29_5": "遂敷弘幽旨。",
    "T51n2073_002:0158a29_6": "欝為宗匠。",
    "T51n2073_002:0158a29_7": "沙門曇斌等數百人。",
    "T51n2073_002:0158b01_8": "伏膺北面。",
    "T51n2073_002:0158b01_9": "欽承雅訓。",
    "T51n2073_002:0158b01_10": "大教濫觴業之始也。",
    "T51n2073_002:0158b02_11": "以希聲初啟。",
    "T51n2073_002:0158b02_12": "未遑曲盡。",
    "T51n2073_002:0158b02_13": "但標舉大致而已。",
    "T51n2073_002:0158b03_14": "撰旨歸兩卷。",
    "T51n2073_002:0158b03_15": "見行於世。",
    "T51n2073_002:0158b03_16": "後不知所終。",
    "T51n2073_002:0158b04_0": "先賢略其清範。",
    "T51n2073_002:0158b04_1": "悲矣。",
    "T51n2073_002:0158b05_0": "求那跋陀羅。",
    "T51n2073_002:0158b05_1": "此云功德賢。",
    "T51n2073_002:0158b05_2": "中天竺人。",
    "T51n2073_002:0158b05_3": "以大乘學故。",
    "T51n2073_002:0158b06_4": "世號摩訶衍。",
    "T51n2073_002:0158b06_5": "本婆羅門種。",
    "T51n2073_002:0158b06_6": "初學五明諸論。",
    "T51n2073_002:0158b07_7": "天文書[竺二+下]醫方呪術。",
    "T51n2073_002:0158b07_8": "靡不該博。",
    "T51n2073_002:0158b07_9": "後遇見阿毘曇雜心。",
    "T51n2073_002:0158b08_10": "尋讀驚悟。",
    "T51n2073_002:0158b08_11": "深崇佛法焉則投簪落飾。",
    "T51n2073_002:0158b09_12": "專精志學。",
    "T51n2073_002:0158b09_13": "及受具戒。",
    "T51n2073_002:0158b09_14": "博通三藏。",
    "T51n2073_002:0158b09_15": "須之辭小乘師。",
    "T51n2073_002:0158b10_16": "進學大乘師。",
    "T51n2073_002:0158b10_17": "大乘師試令探取經匣。",
    "T51n2073_002:0158b11_0": "即得華嚴。",
    "T51n2073_002:0158b11_1": "師喜而歎曰。",
    "T51n2073_002:0158b11_2": "汝於大乘有重緣矣。",
    "T51n2073_002:0158b12_0": "於是讀誦講宣。",
    "T51n2073_002:0158b12_1": "莫能酬抗。",
    "T51n2073_002:0158b12_2": "進受菩薩戒法。",
    "T51n2073_002:0158b12_3": "既而有緣東方。",
    "T51n2073_002:0158b13_4": "乃隨舶泛海。",
    "T51n2073_002:0158b13_5": "中途遇難。",
    "T51n2073_002:0158b13_6": "遂力念十方佛。",
    "T51n2073_002:0158b14_7": "稱觀世音。",
    "T51n2073_002:0158b14_8": "一舶蒙濟。",
    "T51n2073_002:0158b14_9": "其誠感如此。",
    "T51n2073_002:0158b14_10": "元嘉十二年至廣州。",
    "T51n2073_002:0158b15_11": "刺史車朗表聞。",
    "T51n2073_002:0158b15_12": "宋太祖遣信。",
    "T51n2073_002:0158b16_13": "迎接既至京。",
    "T51n2073_002:0158b16_14": "勅名僧慧嚴慧觀。",
    "T51n2073_002:0158b16_15": "於新亭郊勞。",
    "T51n2073_002:0158b17_16": "見其神情朗徹。",
    "T51n2073_002:0158b17_17": "莫不虔仰。",
    "T51n2073_002:0158b17_18": "雖因譯交言。",
    "T51n2073_002:0158b18_19": "而欣若傾蓋。",
    "T51n2073_002:0158b18_20": "初住祇洹寺。",
    "T51n2073_002:0158b18_21": "俄而太祖延請。",
    "T51n2073_002:0158b19_0": "深加崇重。",
    "T51n2073_002:0158b19_1": "琅耶顏延之通才碩學。",
    "T51n2073_002:0158b19_2": "束帶造門。",
    "T51n2073_002:0158b20_0": "於是京師遠近。",
    "T51n2073_002:0158b20_1": "冠蓋相望。",
    "T51n2073_002:0158b20_2": "大將軍彭城王義康丞相南譙王義宣。",
    "T51n2073_002:0158b21_3": "竝師事焉。",
    "T51n2073_002:0158b21_4": "須之眾僧共請出經。",
    "T51n2073_002:0158b22_5": "於祇洹寺東安寺丹陽郡等諸處。",
    "T51n2073_002:0158b22_6": "集義學沙門七百餘人。",
    "T51n2073_002:0158b23_7": "前後所出凡百餘卷。",
    "T51n2073_002:0158b23_8": "譙王欲請講華嚴經。",
    "T51n2073_002:0158b24_9": "而跋陀自忖。",
    "T51n2073_002:0158b24_10": "未善宋言。",
    "T51n2073_002:0158b24_11": "有懷愧歎。",
    "T51n2073_002:0158b25_12": "則旦夕禮懺。",
    "T51n2073_002:0158b25_13": "請觀世音。",
    "T51n2073_002:0158b25_14": "乞求冥應。",
    "T51n2073_002:0158b25_15": "遂夢有人。",
    "T51n2073_002:0158b26_16": "白服持劍。",
    "T51n2073_002:0158b26_17": "擎一人首。",
    "T51n2073_002:0158b26_18": "來至其前曰。",
    "T51n2073_002:0158b26_19": "何故憂耶。",
    "T51n2073_002:0158b27_20": "跋陀具以事對答曰。",
    "T51n2073_002:0158b27_21": "無所多憂。",
    "T51n2073_002:0158b27_22": "即以劍易首。",
    "T51n2073_002:0158b28_23": "更安新頭。",
    "T51n2073_002:0158b28_24": "語令迴轉曰。",
    "T51n2073_002:0158b28_25": "得無痛耶。",
    "T51n2073_002:0158b28_26": "答曰。",
    "T51n2073_002:0158b29_27": "不痛。",
    "T51n2073_002:0158b29_28": "豁然便覺。",
    "T51n2073_002:0158b29_29": "心神喜悅。",
    "T51n2073_002:0158b29_30": "則備領宋言。",
    "T51n2073_002:0158c01_0": "於是遠近道俗。",
    "T51n2073_002:0158c01_1": "服其精感。",
    "T51n2073_002:0158c01_2": "請令就講。",
    "T51n2073_002:0158c01_3": "遂講華嚴。",
    "T51n2073_002:0158c02_4": "數十餘遍。",
    "T51n2073_002:0158c02_5": "元嘉末。",
    "T51n2073_002:0158c02_6": "譙王屢有怖怪夢。",
    "T51n2073_002:0158c02_7": "跋陀答曰。",
    "T51n2073_002:0158c03_8": "京師將有搰亂。",
    "T51n2073_002:0158c03_9": "未及一年。",
    "T51n2073_002:0158c03_10": "元凶搆逆。",
    "T51n2073_002:0158c04_0": "至若丞相陰謀。",
    "T51n2073_002:0158c04_1": "預陳三諫之略。",
    "T51n2073_002:0158c04_2": "世祖遙望。",
    "T51n2073_002:0158c04_3": "懸知一怪之言。",
    "T51n2073_002:0158c05_4": "策杖江中。",
    "T51n2073_002:0158c05_5": "神童忽至。",
    "T51n2073_002:0158c05_6": "焚香樓下。",
    "T51n2073_002:0158c06_0": "山鬼自移登御座。",
    "T51n2073_002:0158c06_1": "而齊尊。",
    "T51n2073_002:0158c06_2": "居釣臺而拯物。",
    "T51n2073_002:0158c06_3": "若斯感德。",
    "T51n2073_002:0158c07_4": "未暇詳舉。",
    "T51n2073_002:0158c07_5": "而自幼已來。",
    "T51n2073_002:0158c07_6": "恒執香爐。",
    "T51n2073_002:0158c07_7": "未甞輟手。",
    "T51n2073_002:0158c08_8": "每食輟分施飛鳥。",
    "T51n2073_002:0158c08_9": "鳥或馴之。",
    "T51n2073_002:0158c08_10": "集手而食。",
    "T51n2073_002:0158c09_11": "到太始四年正月。",
    "T51n2073_002:0158c09_12": "覺體不悆。",
    "T51n2073_002:0158c09_13": "便與太宗及公卿等告別。",
    "T51n2073_002:0158c10_14": "臨終之日。",
    "T51n2073_002:0158c10_15": "延佇而望云。",
    "T51n2073_002:0158c10_16": "見天華聖像。",
    "T51n2073_002:0158c11_17": "隅中遂卒。",
    "T51n2073_002:0158c11_18": "春秋七十有五。",
    "T51n2073_002:0158c11_19": "太宗深加痛惜慰贈甚厚。",
    "T51n2073_002:0158c12_20": "公卿會葬。",
    "T51n2073_002:0158c12_21": "勞哀備焉。",
    "T51n2073_002:0158c13_0": "勒那摩提。",
    "T51n2073_002:0158c13_1": "魏云寶意。",
    "T51n2073_002:0158c13_2": "中天竺人也。",
    "T51n2073_002:0158c13_3": "博贍之富。",
    "T51n2073_002:0158c14_0": "理事兼通。",
    "T51n2073_002:0158c14_1": "誦一億偈。",
    "T51n2073_002:0158c14_2": "偈有三十二字。",
    "T51n2073_002:0158c14_3": "尤明禪法。",
    "T51n2073_002:0158c15_4": "意在遊化。",
    "T51n2073_002:0158c15_5": "以正始五年。",
    "T51n2073_002:0158c15_6": "始屆洛邑。",
    "T51n2073_002:0158c15_7": "譯十地等論二十四卷。",
    "T51n2073_002:0158c16_8": "初意神理標異。",
    "T51n2073_002:0158c16_9": "慧悟絕倫。",
    "T51n2073_002:0158c16_10": "領牒魏詞。",
    "T51n2073_002:0158c17_11": "遍盡隅奧。",
    "T51n2073_002:0158c17_12": "帝每令講華嚴經。",
    "T51n2073_002:0158c17_13": "披釋開悟。",
    "T51n2073_002:0158c18_14": "精義每發。",
    "T51n2073_002:0158c18_15": "一日正處高座。",
    "T51n2073_002:0158c18_16": "忽有持笏執名者。",
    "T51n2073_002:0158c19_17": "形如太宮云。",
    "T51n2073_002:0158c19_18": "天帝命來請法師。",
    "T51n2073_002:0158c19_19": "講華嚴經。",
    "T51n2073_002:0158c20_20": "意曰。",
    "T51n2073_002:0158c20_21": "今此法席。",
    "T51n2073_002:0158c20_22": "尚未停輟。",
    "T51n2073_002:0158c20_23": "待訖經文。",
    "T51n2073_002:0158c20_24": "當從來命。",
    "T51n2073_002:0158c21_25": "雖然法事所資。",
    "T51n2073_002:0158c21_26": "獨不能建。",
    "T51n2073_002:0158c21_27": "都講燒香。",
    "T51n2073_002:0158c22_0": "維那梵唄。",
    "T51n2073_002:0158c22_1": "咸亦須之。",
    "T51n2073_002:0158c22_2": "可請今定。",
    "T51n2073_002:0158c22_3": "使者則如所言。",
    "T51n2073_002:0158c23_4": "講席諸僧咸悉同見。",
    "T51n2073_002:0158c23_5": "既而法事將了。",
    "T51n2073_002:0158c23_6": "又見前使者云。",
    "T51n2073_002:0158c24_7": "奉天帝命故來下迎。",
    "T51n2073_002:0158c24_8": "意乃含笑。",
    "T51n2073_002:0158c24_9": "熙怡告眾。",
    "T51n2073_002:0158c25_10": "辭訣奄然。",
    "T51n2073_002:0158c25_11": "卒於法座。",
    "T51n2073_002:0158c25_12": "都講等僧亦同時殞。",
    "T51n2073_002:0158c26_13": "魏境聞見。",
    "T51n2073_002:0158c26_14": "無不嗟異之。",
    "T51n2073_002:0158c27_0": "釋智炬。",
    "T51n2073_002:0158c27_1": "姓劉氏。",
    "T51n2073_002:0158c27_2": "少事神僧曇無最。",
    "T51n2073_002:0158c27_3": "器局融明。",
    "T51n2073_002:0158c28_0": "學藝優博。",
    "T51n2073_002:0158c28_1": "先讀華嚴經數十遍。",
    "T51n2073_002:0158c28_2": "至於義旨。",
    "T51n2073_002:0158c28_3": "轉加昏瞙。",
    "T51n2073_002:0158c29_4": "常懷怏怏。",
    "T51n2073_002:0158c29_5": "曉夕增其懇到。",
    "T51n2073_002:0158c29_6": "遂夢。",
    "T51n2073_002:0158c29_7": "普賢菩薩。",
    "T51n2073_002:0159a01_8": "乘白象放光明。",
    "T51n2073_002:0159a01_9": "來語曰。",
    "T51n2073_002:0159a01_10": "汝逐我向南方。",
    "T51n2073_002:0159a02_11": "當與汝藥。",
    "T51n2073_002:0159a02_12": "令汝深解。",
    "T51n2073_002:0159a02_13": "忽覺向同意說之。",
    "T51n2073_002:0159a02_14": "而恨不問南方處所。",
    "T51n2073_002:0159a03_15": "同意者曰。",
    "T51n2073_002:0159a03_16": "聖指南方。",
    "T51n2073_002:0159a03_17": "但當依命。",
    "T51n2073_002:0159a04_18": "何憂其不至乎。",
    "T51n2073_002:0159a04_19": "遂束裝遄邁。",
    "T51n2073_002:0159a04_20": "行三日。",
    "T51n2073_002:0159a04_21": "見一清池中有昌蒲。",
    "T51n2073_002:0159a05_22": "莖葉殊偉。",
    "T51n2073_002:0159a05_23": "意悅而掘之。",
    "T51n2073_002:0159a05_24": "其根盤薄數尺。",
    "T51n2073_002:0159a06_25": "劣同車轂。",
    "T51n2073_002:0159a06_26": "炬中心豁然以為。",
    "T51n2073_002:0159a06_27": "聖授服之。",
    "T51n2073_002:0159a07_28": "數日聰悟倍常。",
    "T51n2073_002:0159a07_29": "昔年疑滯。",
    "T51n2073_002:0159a07_30": "一朝通朗。",
    "T51n2073_002:0159a08_0": "而超超入神之趣。",
    "T51n2073_002:0159a08_1": "特出於先賢矣。",
    "T51n2073_002:0159a08_2": "遂周流講說五十餘遍。",
    "T51n2073_002:0159a09_3": "有疏十卷。",
    "T51n2073_002:0159a09_4": "年七十終於北臺。",
    "T51n2073_002:0159a10_0": "釋慧光。",
    "T51n2073_002:0159a10_1": "姓揚氏。",
    "T51n2073_002:0159a10_2": "定州盧人也。",
    "T51n2073_002:0159a10_3": "年十三隨父入洛。",
    "T51n2073_002:0159a11_4": "四月八日往佛陀所。",
    "T51n2073_002:0159a11_5": "從受三歸。",
    "T51n2073_002:0159a11_6": "陀異其眼光外射如焰。",
    "T51n2073_002:0159a12_7": "深惟必有奇操也。",
    "T51n2073_002:0159a12_8": "苦邀留之。",
    "T51n2073_002:0159a12_9": "且令誦經。",
    "T51n2073_002:0159a13_10": "光執卷覽文。",
    "T51n2073_002:0159a13_11": "曾若昔習。",
    "T51n2073_002:0159a13_12": "傍通奧義。",
    "T51n2073_002:0159a13_13": "備盡微旨。",
    "T51n2073_002:0159a14_14": "至夏末度而出家。",
    "T51n2073_002:0159a14_15": "所習經誥。",
    "T51n2073_002:0159a14_16": "便為人說。",
    "T51n2073_002:0159a15_17": "詞既清靡。",
    "T51n2073_002:0159a15_18": "理亦高暢。",
    "T51n2073_002:0159a15_19": "時人號之聖沙彌也。",
    "T51n2073_002:0159a16_0": "然所獲利養。",
    "T51n2073_002:0159a16_1": "轉以惠人。",
    "T51n2073_002:0159a16_2": "讚毀之來。",
    "T51n2073_002:0159a16_3": "聲色無誤。",
    "T51n2073_002:0159a17_4": "眾中益器其遠度也。",
    "T51n2073_002:0159a17_5": "陀曰。",
    "T51n2073_002:0159a17_6": "此沙彌非常人。",
    "T51n2073_002:0159a18_7": "若受大戒。",
    "T51n2073_002:0159a18_8": "宜先聽律。",
    "T51n2073_002:0159a18_9": "律是慧基。",
    "T51n2073_002:0159a18_10": "非智不發。",
    "T51n2073_002:0159a19_11": "由是多習律行。",
    "T51n2073_002:0159a19_12": "及進受具足。",
    "T51n2073_002:0159a19_13": "博聽奉行。",
    "T51n2073_002:0159a19_14": "四夏將登。",
    "T51n2073_002:0159a20_15": "講僧祇律。",
    "T51n2073_002:0159a20_16": "方事紙筆。",
    "T51n2073_002:0159a20_17": "綴述所聞。",
    "T51n2073_002:0159a20_18": "兼以意量。",
    "T51n2073_002:0159a21_19": "參互銷釋。",
    "T51n2073_002:0159a21_20": "陀以他日。",
    "T51n2073_002:0159a21_21": "密覩其文。",
    "T51n2073_002:0159a21_22": "乃呼而告曰。",
    "T51n2073_002:0159a22_23": "吾之度子。",
    "T51n2073_002:0159a22_24": "望傳聖果。",
    "T51n2073_002:0159a22_25": "何乃區區。",
    "T51n2073_002:0159a22_26": "方事世語乎。",
    "T51n2073_002:0159a23_27": "可為高明法師。",
    "T51n2073_002:0159a23_28": "道務非子分也。",
    "T51n2073_002:0159a23_29": "會佛陀勒那初譯十地。",
    "T51n2073_002:0159a24_30": "光乃命章開釋。",
    "T51n2073_002:0159a24_31": "獨最其功。",
    "T51n2073_002:0159a24_32": "又四分一部。",
    "T51n2073_002:0159a25_33": "亦其草創。",
    "T51n2073_002:0159a25_34": "後更聽華嚴。",
    "T51n2073_002:0159a25_35": "深悟精致。",
    "T51n2073_002:0159a26_0": "研微積慮。",
    "T51n2073_002:0159a26_1": "亟涉炎涼。",
    "T51n2073_002:0159a26_2": "既而探蹟索隱。",
    "T51n2073_002:0159a26_3": "妙盡隅奧。",
    "T51n2073_002:0159a27_4": "乃當元匠。",
    "T51n2073_002:0159a27_5": "恒親講授。",
    "T51n2073_002:0159a27_6": "光以為。",
    "T51n2073_002:0159a27_7": "正教之本莫過斯典凡有敷揚。",
    "T51n2073_002:0159a28_8": "備申恭肅。",
    "T51n2073_002:0159a28_9": "每講必中表潔淨。",
    "T51n2073_002:0159a29_10": "至於聽眾亦同之。",
    "T51n2073_002:0159a29_11": "履[尸@串]竝脫之階外。",
    "T51n2073_002:0159a29_12": "各嚴香華。",
    "T51n2073_002:0159b01_13": "顒顒合掌。",
    "T51n2073_002:0159b01_14": "敬法之勤。",
    "T51n2073_002:0159b01_15": "千歲罕儔矣。",
    "T51n2073_002:0159b01_16": "有疏四卷。",
    "T51n2073_002:0159b02_17": "立頓漸圓三教。",
    "T51n2073_002:0159b02_18": "以判群典。",
    "T51n2073_002:0159b02_19": "以華嚴為圓教。",
    "T51n2073_002:0159b03_20": "自其始也。",
    "T51n2073_002:0159b03_21": "若涅槃維摩十地地持。",
    "T51n2073_002:0159b03_22": "竝疎其奧旨。",
    "T51n2073_002:0159b04_23": "為時所尚。",
    "T51n2073_002:0159b04_24": "司徒高教曹僕射高隆之。",
    "T51n2073_002:0159b05_0": "及朝臣司馬令孤子儒等。",
    "T51n2073_002:0159b05_1": "齊代名賢。",
    "T51n2073_002:0159b05_2": "重之如聖。",
    "T51n2073_002:0159b06_3": "甞遇亢旱。",
    "T51n2073_002:0159b06_4": "以聞光。",
    "T51n2073_002:0159b06_5": "乃就嵩岳池邊燒香請雨。",
    "T51n2073_002:0159b07_6": "尋則流霔原濕利之。",
    "T51n2073_002:0159b07_7": "其感致幽現為若此也。",
    "T51n2073_002:0159b08_8": "初在京任國僧都。",
    "T51n2073_002:0159b08_9": "俄轉為國統。",
    "T51n2073_002:0159b08_10": "將終前日。",
    "T51n2073_002:0159b09_0": "乘車向曹。",
    "T51n2073_002:0159b09_1": "行出寺門。",
    "T51n2073_002:0159b09_2": "屋脊自裂。",
    "T51n2073_002:0159b09_3": "既坐判事。",
    "T51n2073_002:0159b09_4": "塊落筆前。",
    "T51n2073_002:0159b10_5": "尋視無從。",
    "T51n2073_002:0159b10_6": "知乃終相。",
    "T51n2073_002:0159b10_7": "因斯乖悆四旬有餘。",
    "T51n2073_002:0159b11_8": "奄化於鄴城大覺寺。",
    "T51n2073_002:0159b11_9": "春秋七十矣。",
    "T51n2073_002:0159b11_10": "常願生佛境。",
    "T51n2073_002:0159b12_11": "而不定方隅。",
    "T51n2073_002:0159b12_12": "及氣將欲絕。",
    "T51n2073_002:0159b12_13": "大見天宮來下。",
    "T51n2073_002:0159b13_14": "遂乃投誠安養。",
    "T51n2073_002:0159b13_15": "溘從斯卒。",
    "T51n2073_002:0159b13_16": "所著。",
    "T51n2073_002:0159b13_17": "玄宗論。",
    "T51n2073_002:0159b14_18": "大乘義律。",
    "T51n2073_002:0159b14_19": "仁王七誡。",
    "T51n2073_002:0159b14_20": "及僧制十八條。",
    "T51n2073_002:0159b14_21": "竝文旨清肅。",
    "T51n2073_002:0159b15_22": "見重當世。",
    "T51n2073_002:0159b16_0": "釋僧範。",
    "T51n2073_002:0159b16_1": "姓李氏。",
    "T51n2073_002:0159b16_2": "平鄉人也。",
    "T51n2073_002:0159b16_3": "幼曾遊學群書。",
    "T51n2073_002:0159b16_4": "年二十三。",
    "T51n2073_002:0159b17_5": "備通流略。",
    "T51n2073_002:0159b17_6": "至於七耀九章天文筮術。",
    "T51n2073_002:0159b18_0": "竝無與抗衡。",
    "T51n2073_002:0159b18_1": "從學者千餘人。",
    "T51n2073_002:0159b18_2": "而年華色美。",
    "T51n2073_002:0159b18_3": "都無伉儷之心。",
    "T51n2073_002:0159b19_4": "思附法門。",
    "T51n2073_002:0159b19_5": "燒指而充供養。",
    "T51n2073_002:0159b19_6": "年二十九。",
    "T51n2073_002:0159b20_7": "聞講涅槃。",
    "T51n2073_002:0159b20_8": "輒試一聽。",
    "T51n2073_002:0159b20_9": "乃知佛經祕極也。",
    "T51n2073_002:0159b21_0": "遂投鄴城僧。",
    "T51n2073_002:0159b21_1": "始而出家。",
    "T51n2073_002:0159b21_2": "初學涅槃。",
    "T51n2073_002:0159b21_3": "願盡其致。",
    "T51n2073_002:0159b22_0": "後向洛下從獻公。",
    "T51n2073_002:0159b22_1": "聽法華華嚴。",
    "T51n2073_002:0159b22_2": "又就沙門慧光。",
    "T51n2073_002:0159b23_3": "更採新致。",
    "T51n2073_002:0159b23_4": "久之乃出遊開化。",
    "T51n2073_002:0159b23_5": "利安齊魏。",
    "T51n2073_002:0159b23_6": "每法莚一舉。",
    "T51n2073_002:0159b24_7": "聽眾千餘。",
    "T51n2073_002:0159b24_8": "膠州刺史杜弼。",
    "T51n2073_002:0159b24_9": "於鄴下現義寺。",
    "T51n2073_002:0159b25_10": "請範冬講。",
    "T51n2073_002:0159b25_11": "至華嚴六地。",
    "T51n2073_002:0159b25_12": "忽有一雁飛下。",
    "T51n2073_002:0159b26_13": "從浮圖東順行入堂。",
    "T51n2073_002:0159b26_14": "正對高座。",
    "T51n2073_002:0159b26_15": "伏而聽法。",
    "T51n2073_002:0159b27_16": "講散徐出。",
    "T51n2073_002:0159b27_17": "還順塔西。",
    "T51n2073_002:0159b27_18": "爾乃翔逝。",
    "T51n2073_002:0159b27_19": "又於此寺夏講。",
    "T51n2073_002:0159b28_20": "雀來在座西南伏聽。",
    "T51n2073_002:0159b28_21": "終於九旬。",
    "T51n2073_002:0159b28_22": "又曾處濟州。",
    "T51n2073_002:0159b29_23": "亦有一鴨。",
    "T51n2073_002:0159b29_24": "飛來入聽訖講便去。",
    "T51n2073_002:0159b29_25": "斯諸祥感眾矣。",
    "T51n2073_002:0159c01_26": "自非道洽冥府。",
    "T51n2073_002:0159c01_27": "何能與此。",
    "T51n2073_002:0159c01_28": "昔正講華嚴。",
    "T51n2073_002:0159c02_29": "輒有一僧加毀。",
    "T51n2073_002:0159c02_30": "當夜有神。",
    "T51n2073_002:0159c02_31": "特致鞭楚。",
    "T51n2073_002:0159c03_32": "死而復蘇。",
    "T51n2073_002:0159c03_33": "因是見聞者。",
    "T51n2073_002:0159c03_34": "皆深敬。",
    "T51n2073_002:0159c03_35": "異甞宿他寺。",
    "T51n2073_002:0159c04_36": "正逢布薩。",
    "T51n2073_002:0159c04_37": "有僧昇座。",
    "T51n2073_002:0159c04_38": "將欲竪義。",
    "T51n2073_002:0159c04_39": "乃曰。",
    "T51n2073_002:0159c05_0": "竪論法相。",
    "T51n2073_002:0159c05_1": "深會聖言。",
    "T51n2073_002:0159c05_2": "何勞說戒。",
    "T51n2073_002:0159c05_3": "僧常聞耳。",
    "T51n2073_002:0159c05_4": "忽見一神形高丈餘。",
    "T51n2073_002:0159c06_5": "貌甚雄峻。",
    "T51n2073_002:0159c06_6": "來到座前。",
    "T51n2073_002:0159c06_7": "問竪義者。",
    "T51n2073_002:0159c07_8": "今是何日。",
    "T51n2073_002:0159c07_9": "答曰。",
    "T51n2073_002:0159c07_10": "是布薩日。",
    "T51n2073_002:0159c07_11": "神則以手搨之。",
    "T51n2073_002:0159c08_12": "曳于座下。",
    "T51n2073_002:0159c08_13": "委頓垂死。",
    "T51n2073_002:0159c08_14": "次問上座。",
    "T51n2073_002:0159c08_15": "搨曳同前。",
    "T51n2073_002:0159c09_16": "由是自勵。",
    "T51n2073_002:0159c09_17": "至終僧事私緣。",
    "T51n2073_002:0159c09_18": "竟無說欲。",
    "T51n2073_002:0159c09_19": "乃至疾重。",
    "T51n2073_002:0159c10_20": "輿而就僧。",
    "T51n2073_002:0159c10_21": "將終之日。",
    "T51n2073_002:0159c10_22": "延象入房。",
    "T51n2073_002:0159c10_23": "下床跪悔。",
    "T51n2073_002:0159c11_24": "唯陳宿觸而已。",
    "T51n2073_002:0159c11_25": "時當正午。",
    "T51n2073_002:0159c11_26": "遺誡而卒於鄴下東大覺寺。",
    "T51n2073_002:0159c12_27": "時春秋八十。",
    "T51n2073_002:0159c12_28": "即天保六年三月二日也。",
    "T51n2073_002:0159c13_29": "初範背儒入釋。",
    "T51n2073_002:0159c13_30": "崇信日增。",
    "T51n2073_002:0159c13_31": "寂想空門。",
    "T51n2073_002:0159c14_32": "永扗先習。",
    "T51n2073_002:0159c14_33": "言不及利。",
    "T51n2073_002:0159c14_34": "容無喜怒。",
    "T51n2073_002:0159c14_35": "每留意華嚴。",
    "T51n2073_002:0159c15_36": "為來報之業。",
    "T51n2073_002:0159c15_37": "夜禮千佛。",
    "T51n2073_002:0159c15_38": "為一世常資。",
    "T51n2073_002:0159c15_39": "末歲年事既隆。",
    "T51n2073_002:0159c16_40": "身力不齊。",
    "T51n2073_002:0159c16_41": "猶依六時。",
    "T51n2073_002:0159c16_42": "叩頭枕上。",
    "T51n2073_002:0159c17_0": "自有英達。",
    "T51n2073_002:0159c17_1": "罕能方駕。",
    "T51n2073_002:0159c17_2": "焉著華嚴疏五卷。",
    "T51n2073_002:0159c17_3": "十地地持維摩勝鬘。",
    "T51n2073_002:0159c18_4": "各有疏記。",
    "T51n2073_002:0159c19_0": "釋曇衍。",
    "T51n2073_002:0159c19_1": "姓夏候氏。",
    "T51n2073_002:0159c19_2": "南兗州人。",
    "T51n2073_002:0159c19_3": "初生而有牙齒具焉。",
    "T51n2073_002:0159c20_4": "七歲從學。",
    "T51n2073_002:0159c20_5": "聰敏超絕。",
    "T51n2073_002:0159c20_6": "十八舉秀才。",
    "T51n2073_002:0159c20_7": "遇聽光公法席。",
    "T51n2073_002:0159c21_8": "即稟歸戒。",
    "T51n2073_002:0159c21_9": "年二十三。",
    "T51n2073_002:0159c21_10": "投光出家。",
    "T51n2073_002:0159c22_0": "光即為受戒。",
    "T51n2073_002:0159c22_1": "聽涉無暇。",
    "T51n2073_002:0159c22_2": "乃損食息。",
    "T51n2073_002:0159c22_3": "然於藏旨有疑。",
    "T51n2073_002:0159c23_4": "諮詢碩學。",
    "T51n2073_002:0159c23_5": "皆反啟其志莫之能通。",
    "T51n2073_002:0159c23_6": "遂開拓寰宇。",
    "T51n2073_002:0159c24_7": "造華嚴經疏七卷。",
    "T51n2073_002:0159c24_8": "講事相仍毘贊玄理。",
    "T51n2073_002:0159c25_9": "聲辨雄亮。",
    "T51n2073_002:0159c25_10": "言會時機。",
    "T51n2073_002:0159c25_11": "自齊鄭燕趙。",
    "T51n2073_002:0159c25_12": "皆履法化。",
    "T51n2073_002:0159c26_13": "常隨義學千僧有餘。",
    "T51n2073_002:0159c26_14": "出家居士。",
    "T51n2073_002:0159c26_15": "近於五百。",
    "T51n2073_002:0159c27_0": "光終之後。",
    "T51n2073_002:0159c27_1": "華嚴大教。",
    "T51n2073_002:0159c27_2": "於茲再盛也。",
    "T51n2073_002:0159c27_3": "趙郡王高元海。",
    "T51n2073_002:0159c28_4": "膠州刺史杜弼。",
    "T51n2073_002:0159c28_5": "竝齊朝懿戚重臣。",
    "T51n2073_002:0159c28_6": "留情敬奉。",
    "T51n2073_002:0159c29_7": "僕射祖孝徵。",
    "T51n2073_002:0159c29_8": "奏為國都。",
    "T51n2073_002:0159c29_9": "緝諧道政。",
    "T51n2073_002:0159c29_10": "不墜玄網。",
    "T51n2073_002:0160a01_11": "以開皇元年三月十八日。",
    "T51n2073_002:0160a01_12": "忽告侍人。",
    "T51n2073_002:0160a02_13": "無常至矣。",
    "T51n2073_002:0160a02_14": "便誦念彌勒佛。",
    "T51n2073_002:0160a02_15": "聲氣俱盡。",
    "T51n2073_002:0160a02_16": "於時正中。",
    "T51n2073_002:0160a03_17": "旁僧同觀顏色怡悅。",
    "T51n2073_002:0160a03_18": "時年七十有九。",
    "T51n2073_002:0160a03_19": "衍每財之所拯。",
    "T51n2073_002:0160a04_20": "貧病為初。",
    "T51n2073_002:0160a04_21": "法之所被。",
    "T51n2073_002:0160a04_22": "如行先授。",
    "T51n2073_002:0160a05_0": "但見經像。",
    "T51n2073_002:0160a05_1": "必奉禮迎送。",
    "T51n2073_002:0160a05_2": "道遇貧陋。",
    "T51n2073_002:0160a05_3": "必悲憐垂泣。",
    "T51n2073_002:0160a06_4": "又恒樂聽戒往來兩闕。",
    "T51n2073_002:0160a06_5": "辛醒臭物。",
    "T51n2073_002:0160a06_6": "曾不目臨。",
    "T51n2073_002:0160a07_7": "下氣逼流。",
    "T51n2073_002:0160a07_8": "身出戶外。",
    "T51n2073_002:0160a07_9": "以清淨僧房不為熏教故也。",
    "T51n2073_002:0160a08_10": "未終之前。",
    "T51n2073_002:0160a08_11": "有夢見衍。",
    "T51n2073_002:0160a08_12": "朱衣螺髮。",
    "T51n2073_002:0160a08_13": "鬢垂於背。",
    "T51n2073_002:0160a09_14": "二童侍之昇空。",
    "T51n2073_002:0160a09_15": "而西北高逝。",
    "T51n2073_002:0160a09_16": "尋爾便終。",
    "T51n2073_002:0160a10_17": "時共以為。",
    "T51n2073_002:0160a10_18": "華嚴經中善財童子所求第三十二善知識。",
    "T51n2073_002:0160a11_19": "婆沙婆陀夜天之狀也。",
    "T51n2073_002:0160a12_0": "釋靈裕。",
    "T51n2073_002:0160a12_1": "俗姓趙氏。",
    "T51n2073_002:0160a12_2": "鉅鹿曲陽人也。",
    "T51n2073_002:0160a12_3": "年在童幼。",
    "T51n2073_002:0160a13_0": "每見形像沙門。",
    "T51n2073_002:0160a13_1": "則知迴向。",
    "T51n2073_002:0160a13_2": "聞屠殺聲相。",
    "T51n2073_002:0160a13_3": "愴然改容。",
    "T51n2073_002:0160a14_4": "六歲便隨母受戒。",
    "T51n2073_002:0160a14_5": "父強止之。",
    "T51n2073_002:0160a14_6": "誓心無毀。",
    "T51n2073_002:0160a15_0": "年七歲啟父出家。",
    "T51n2073_002:0160a15_1": "父以愛念。",
    "T51n2073_002:0160a15_2": "未之許也。",
    "T51n2073_002:0160a15_3": "裕私歎曰。",
    "T51n2073_002:0160a16_4": "不得七歲出家。",
    "T51n2073_002:0160a16_5": "一生壞矣。",
    "T51n2073_002:0160a16_6": "遂從師教訓。",
    "T51n2073_002:0160a17_0": "學業日新。",
    "T51n2073_002:0160a17_1": "十五丁父憂。",
    "T51n2073_002:0160a17_2": "苫塊毀瘠。",
    "T51n2073_002:0160a17_3": "杖而能起。",
    "T51n2073_002:0160a18_0": "服闋默往趙郡應覺寺。",
    "T51n2073_002:0160a18_1": "投寶禪師。",
    "T51n2073_002:0160a18_2": "求出家焉。",
    "T51n2073_002:0160a19_0": "寶觀其神彩。",
    "T51n2073_002:0160a19_1": "乃辭曰。",
    "T51n2073_002:0160a19_2": "吾為汝緣。",
    "T51n2073_002:0160a19_3": "吾非汝師。",
    "T51n2073_002:0160a19_4": "可往勝處也。",
    "T51n2073_002:0160a20_5": "遂赴定州。",
    "T51n2073_002:0160a20_6": "而受具足。",
    "T51n2073_002:0160a20_7": "則誦四分僧祇二戒。",
    "T51n2073_002:0160a21_8": "自寫其文。",
    "T51n2073_002:0160a21_9": "八日之中書誦竝了。",
    "T51n2073_002:0160a21_10": "後南逝障隆。",
    "T51n2073_002:0160a22_11": "於隱公所。",
    "T51n2073_002:0160a22_12": "遍學四分。",
    "T51n2073_002:0160a22_13": "又依憑公。",
    "T51n2073_002:0160a22_14": "獨聽十地。",
    "T51n2073_002:0160a23_15": "晨夕幽撿。",
    "T51n2073_002:0160a23_16": "發奇剖新。",
    "T51n2073_002:0160a23_17": "者咸共推之涅槃地論。",
    "T51n2073_002:0160a24_18": "皆博尋舊解。",
    "T51n2073_002:0160a24_19": "穿鑿新異。",
    "T51n2073_002:0160a24_20": "唯大集般若出自生知。",
    "T51n2073_002:0160a25_21": "雜心成實。",
    "T51n2073_002:0160a25_22": "皆窮巢穴。",
    "T51n2073_002:0160a25_23": "夏居十二。",
    "T51n2073_002:0160a25_24": "鄴京創講。",
    "T51n2073_002:0160a26_25": "名節既著。",
    "T51n2073_002:0160a26_26": "言令若新。",
    "T51n2073_002:0160a26_27": "預聽歸依。",
    "T51n2073_002:0160a26_28": "遂號為裕菩薩也。",
    "T51n2073_002:0160a27_29": "皆從受戒。",
    "T51n2073_002:0160a27_30": "三聚大法自此廣焉。",
    "T51n2073_002:0160a28_0": "至於華嚴一部。",
    "T51n2073_002:0160a28_1": "彌深留心。",
    "T51n2073_002:0160a28_2": "研鏡旨趣。",
    "T51n2073_002:0160a28_3": "時稱令家。",
    "T51n2073_002:0160a29_4": "會齊后染患。",
    "T51n2073_002:0160a29_5": "願聞斯典。",
    "T51n2073_002:0160a29_6": "照玄諸統舉裕以當之。",
    "T51n2073_002:0160b01_7": "時有雄鷄一頭。",
    "T51n2073_002:0160b01_8": "常隨眾聽。",
    "T51n2073_002:0160b01_9": "逮于講散。",
    "T51n2073_002:0160b01_10": "乃大鳴高飛。",
    "T51n2073_002:0160b02_11": "西南樹上。",
    "T51n2073_002:0160b02_12": "經夜而終。",
    "T51n2073_002:0160b02_13": "俄而疾遂有瘳。",
    "T51n2073_002:0160b03_14": "斯亦感通之明應也。",
    "T51n2073_002:0160b03_15": "內宮由是。",
    "T51n2073_002:0160b03_16": "施袈裟三百領。",
    "T51n2073_002:0160b04_17": "裕受而散之。",
    "T51n2073_002:0160b04_18": "齊安東王樓叡。",
    "T51n2073_002:0160b04_19": "致敬諸僧。",
    "T51n2073_002:0160b05_0": "次至裕前。",
    "T51n2073_002:0160b05_1": "不覺怖而流汗。",
    "T51n2073_002:0160b05_2": "退問知其異度。",
    "T51n2073_002:0160b05_3": "即奉為戒師。",
    "T51n2073_002:0160b06_4": "寶山一寺。",
    "T51n2073_002:0160b06_5": "裕之經始。",
    "T51n2073_002:0160b06_6": "叡為施主。",
    "T51n2073_002:0160b06_7": "傾撤金具。",
    "T51n2073_002:0160b07_8": "其潛德感人。",
    "T51n2073_002:0160b07_9": "又此類也。",
    "T51n2073_002:0160b07_10": "周氏滅齊。",
    "T51n2073_002:0160b07_11": "二教淪沒。",
    "T51n2073_002:0160b08_12": "乃潛形世壤。",
    "T51n2073_002:0160b08_13": "衣以暫衰三升之布。",
    "T51n2073_002:0160b09_0": "頭絰麻帶。",
    "T51n2073_002:0160b09_1": "如喪考妣。",
    "T51n2073_002:0160b09_2": "誓得佛法更始方襲舊儀。",
    "T51n2073_002:0160b10_3": "引同俗二十餘人。",
    "T51n2073_002:0160b10_4": "居於聚落。",
    "T51n2073_002:0160b10_5": "夜談正理。",
    "T51n2073_002:0160b10_6": "晝讀俗書。",
    "T51n2073_002:0160b11_7": "大隋運興。",
    "T51n2073_002:0160b11_8": "載昌釋教。",
    "T51n2073_002:0160b11_9": "裕德光先彥。",
    "T51n2073_002:0160b11_10": "即預搜揚。",
    "T51n2073_002:0160b12_11": "帝下詔曰。",
    "T51n2073_002:0160b12_12": "敬問相州大慈寺靈裕法師。",
    "T51n2073_002:0160b13_13": "朕遵崇三寶。",
    "T51n2073_002:0160b13_14": "歸向情深。",
    "T51n2073_002:0160b13_15": "願闡揚大乘。",
    "T51n2073_002:0160b13_16": "護持正法。",
    "T51n2073_002:0160b14_17": "法師梵行精厚。",
    "T51n2073_002:0160b14_18": "理義淵遠。",
    "T51n2073_002:0160b14_19": "弘通聖教。",
    "T51n2073_002:0160b14_20": "開導聾瞽。",
    "T51n2073_002:0160b15_21": "道俗欽仰。",
    "T51n2073_002:0160b15_22": "思作福田。",
    "T51n2073_002:0160b15_23": "京師天下具瞻。",
    "T51n2073_002:0160b16_0": "四方輻湊。",
    "T51n2073_002:0160b16_1": "故遠召法師。",
    "T51n2073_002:0160b16_2": "共營功德業。",
    "T51n2073_002:0160b16_3": "宜知朕意早入京也。",
    "T51n2073_002:0160b17_4": "法師乃步入長安時。",
    "T51n2073_002:0160b17_5": "年七十有四。",
    "T51n2073_002:0160b18_6": "勅遣勞待。",
    "T51n2073_002:0160b18_7": "令住興善。",
    "T51n2073_002:0160b18_8": "仍詔所司。",
    "T51n2073_002:0160b18_9": "盛集僧望。",
    "T51n2073_002:0160b19_0": "評立國統。",
    "T51n2073_002:0160b19_1": "眾議咸屬。",
    "T51n2073_002:0160b19_2": "莫有異詞。",
    "T51n2073_002:0160b19_3": "裕乃固讓。",
    "T51n2073_002:0160b19_4": "確乎不拔。",
    "T51n2073_002:0160b20_5": "遂抗表請還。",
    "T51n2073_002:0160b20_6": "帝即聽許。",
    "T51n2073_002:0160b20_7": "僕射高頴等。",
    "T51n2073_002:0160b21_0": "又表請留。",
    "T51n2073_002:0160b21_1": "帝則下勅令宜住此。",
    "T51n2073_002:0160b21_2": "裕曰。",
    "T51n2073_002:0160b21_3": "一國之主。",
    "T51n2073_002:0160b22_4": "義無二言。",
    "T51n2073_002:0160b22_5": "今復重留。",
    "T51n2073_002:0160b22_6": "情所未可。",
    "T51n2073_002:0160b22_7": "因告門人曰。",
    "T51n2073_002:0160b23_8": "王臣親附久有誓言。",
    "T51n2073_002:0160b23_9": "進則侮人輕法。",
    "T51n2073_002:0160b23_10": "退則不無遙敬。",
    "T51n2073_002:0160b24_11": "故吾斟□向背耳。",
    "T51n2073_002:0160b24_12": "尋復三勅固邀裕較執如上。",
    "T51n2073_002:0160b25_13": "帝語蘇威曰。",
    "T51n2073_002:0160b25_14": "朕知裕師剛正。",
    "T51n2073_002:0160b26_0": "是自在人。",
    "T51n2073_002:0160b26_1": "誠不可屈節。",
    "T51n2073_002:0160b26_2": "乃勅左僕射高頴。",
    "T51n2073_002:0160b26_3": "右僕射蘇威等諸公。",
    "T51n2073_002:0160b27_4": "詣寺宣旨。",
    "T51n2073_002:0160b27_5": "代大帝受戒悔罪。",
    "T51n2073_002:0160b28_6": "并送綾錦衣服絹三百段。",
    "T51n2073_002:0160b28_7": "助營山寺。",
    "T51n2073_002:0160b28_8": "御自注額。",
    "T51n2073_002:0160b29_9": "可號露泉寺。",
    "T51n2073_002:0160b29_10": "既至本鄉。",
    "T51n2073_002:0160b29_11": "勅問重沓。",
    "T51n2073_002:0160b29_12": "後聞鄴下唱言。",
    "T51n2073_002:0160c01_13": "自知別世。",
    "T51n2073_002:0160c01_14": "乃示誨善惡。",
    "T51n2073_002:0160c01_15": "勵諸門人。",
    "T51n2073_002:0160c02_16": "授筆制哀速終悲永殞詩二首。",
    "T51n2073_002:0160c02_17": "至于三更。",
    "T51n2073_002:0160c03_0": "忽覺異香滿室。",
    "T51n2073_002:0160c03_1": "內外驚之。",
    "T51n2073_002:0160c03_2": "靜慮口緣念佛。",
    "T51n2073_002:0160c03_3": "相繼達于明相。",
    "T51n2073_002:0160c04_4": "奄終于演空寺焉。",
    "T51n2073_002:0160c04_5": "春秋八十有八。",
    "T51n2073_002:0160c05_6": "即大業元年正月二十二日也。",
    "T51n2073_002:0160c05_7": "哀動山世。",
    "T51n2073_002:0160c06_0": "即殯於寶山靈泉寺側。",
    "T51n2073_002:0160c06_1": "起塔崇焉。",
    "T51n2073_002:0160c06_2": "初裕清貞潔己。",
    "T51n2073_002:0160c07_3": "正氣雲霄。",
    "T51n2073_002:0160c07_4": "高山景行。",
    "T51n2073_002:0160c07_5": "動成摸揩。",
    "T51n2073_002:0160c07_6": "甞母病綿篤。",
    "T51n2073_002:0160c08_7": "追赴已終。",
    "T51n2073_002:0160c08_8": "中路即還。",
    "T51n2073_002:0160c08_9": "其割愛弘道如是。",
    "T51n2073_002:0160c09_0": "甞向一處。",
    "T51n2073_002:0160c09_1": "敷演將半。",
    "T51n2073_002:0160c09_2": "忽見講主仍畜韮園。",
    "T51n2073_002:0160c09_3": "裕曰。",
    "T51n2073_002:0160c10_4": "弘法之始。",
    "T51n2073_002:0160c10_5": "為遣過源。",
    "T51n2073_002:0160c10_6": "惡業未傾。",
    "T51n2073_002:0160c10_7": "清道焉在。",
    "T51n2073_002:0160c11_8": "此講不可再也。",
    "T51n2073_002:0160c11_9": "宜即散。",
    "T51n2073_002:0160c11_10": "之便執錫持衣。",
    "T51n2073_002:0160c11_11": "徑辭而出。",
    "T51n2073_002:0160c12_12": "講主曰。",
    "T51n2073_002:0160c12_13": "法師但講。",
    "T51n2073_002:0160c12_14": "此業易異除耳。",
    "T51n2073_002:0160c13_0": "便即借請村人犁具。",
    "T51n2073_002:0160c13_1": "一時耕殺四十畆韮。",
    "T51n2073_002:0160c13_2": "斯可謂。",
    "T51n2073_002:0160c14_3": "如聞而行。",
    "T51n2073_002:0160c14_4": "或大德同集。",
    "T51n2073_002:0160c14_5": "間以言謔。",
    "T51n2073_002:0160c14_6": "乃裕之臨席。",
    "T51n2073_002:0160c15_7": "無不肅然自持諠鬧欣靜。",
    "T51n2073_002:0160c15_8": "所以下座尼眾。",
    "T51n2073_002:0160c16_9": "莫敢面參。",
    "T51n2073_002:0160c16_10": "而性剛威爽。",
    "T51n2073_002:0160c16_11": "服章麁弊。",
    "T51n2073_002:0160c17_0": "貴達之與斯下。",
    "T51n2073_002:0160c17_1": "承對一焉。",
    "T51n2073_002:0160c17_2": "去來自彼。",
    "T51n2073_002:0160c17_3": "曾無迎送。",
    "T51n2073_002:0160c18_4": "故鄴下諺曰。",
    "T51n2073_002:0160c18_5": "衍法師。",
    "T51n2073_002:0160c18_6": "伏道不伏俗。",
    "T51n2073_002:0160c18_7": "裕法師。",
    "T51n2073_002:0160c19_8": "道俗俱伏。",
    "T51n2073_002:0160c19_9": "誠其應對無思。",
    "T51n2073_002:0160c19_10": "發言成論故也。",
    "T51n2073_002:0160c20_0": "自前後行施。",
    "T51n2073_002:0160c20_1": "悲敬兼之。",
    "T51n2073_002:0160c20_2": "袈裟為惠。",
    "T51n2073_002:0160c20_3": "出過千領。",
    "T51n2073_002:0160c21_0": "病苦所及。",
    "T51n2073_002:0160c21_1": "醫療繁多。",
    "T51n2073_002:0160c21_2": "但得厚味。",
    "T51n2073_002:0160c21_3": "先命奉僧。",
    "T51n2073_002:0160c21_4": "身預倫伍。",
    "T51n2073_002:0160c22_5": "片無貯納。",
    "T51n2073_002:0160c22_6": "講授之際。",
    "T51n2073_002:0160c22_7": "正面西方。",
    "T51n2073_002:0160c22_8": "凡所涕唾。",
    "T51n2073_002:0160c23_9": "一生無棄。",
    "T51n2073_002:0160c23_10": "身無擇行。",
    "T51n2073_002:0160c23_11": "口無擇言。",
    "T51n2073_002:0160c23_12": "人畜訓誨。",
    "T51n2073_002:0160c24_13": "絕於呵捶。",
    "T51n2073_002:0160c24_14": "乃至責問童稚。",
    "T51n2073_002:0160c24_15": "誡約門人。",
    "T51n2073_002:0160c24_16": "皆自述己名。",
    "T51n2073_002:0160c25_17": "號彼仁者。",
    "T51n2073_002:0160c25_18": "苦辭切斷。",
    "T51n2073_002:0160c25_19": "無不淚流。",
    "T51n2073_002:0160c25_20": "若言行有違。",
    "T51n2073_002:0160c26_21": "即不同止。",
    "T51n2073_002:0160c26_22": "非律所許。",
    "T51n2073_002:0160c26_23": "寺法不停。",
    "T51n2073_002:0160c26_24": "女人尼眾。",
    "T51n2073_002:0160c27_25": "誓不授戒。",
    "T51n2073_002:0160c27_26": "及所住房。",
    "T51n2073_002:0160c27_27": "不令登踐。",
    "T51n2073_002:0160c27_28": "斯勵格後代之弘略也。",
    "T51n2073_002:0160c28_29": "沙彌受具。",
    "T51n2073_002:0160c28_30": "和上德難。",
    "T51n2073_002:0160c28_31": "故盡報不行。",
    "T51n2073_002:0160c29_32": "自餘師證。",
    "T51n2073_002:0160c29_33": "至時臨眾。",
    "T51n2073_002:0160c29_34": "若授以三聚。",
    "T51n2073_002:0160c29_35": "則七眾備傳故。",
    "T51n2073_002:0161a01_36": "使弘法之時方聽女眾入寺。",
    "T51n2073_002:0161a01_37": "竝後入先出。",
    "T51n2073_002:0161a02_38": "直往無留。",
    "T51n2073_002:0161a02_39": "致有法席清嚴響傳宇內者供給不預沙彌。",
    "T51n2073_002:0161a03_40": "身服清修。",
    "T51n2073_002:0161a03_41": "不御綾綺。",
    "T51n2073_002:0161a03_42": "垂裙則踝上四指。",
    "T51n2073_002:0161a04_43": "衫袖則僅與肘齊。",
    "T51n2073_002:0161a04_44": "祇支極長至脛而已。",
    "T51n2073_002:0161a05_45": "誤見衣制過度。",
    "T51n2073_002:0161a05_46": "則處眾割之。",
    "T51n2073_002:0161a05_47": "故方裙正背。",
    "T51n2073_002:0161a06_48": "大氈被褥皮革。",
    "T51n2073_002:0161a06_49": "上色錢寶物等。",
    "T51n2073_002:0161a06_50": "竝不入房。",
    "T51n2073_002:0161a07_51": "祇支五條。",
    "T51n2073_002:0161a07_52": "由來以布。",
    "T51n2073_002:0161a07_53": "縱有繒帛。",
    "T51n2073_002:0161a07_54": "終以惠人。",
    "T51n2073_002:0161a08_55": "餘則敗納而已。",
    "T51n2073_002:0161a08_56": "自年三十。",
    "T51n2073_002:0161a08_57": "即在著述。",
    "T51n2073_002:0161a08_58": "造華嚴疏及旨歸合九卷。",
    "T51n2073_002:0161a09_59": "自餘內外章疏傳記等總百餘卷。",
    "T51n2073_002:0161a10_60": "現行於代。",
    "T51n2073_002:0161a10_61": "然東夏法流。",
    "T51n2073_002:0161a10_62": "化儀異等。",
    "T51n2073_002:0161a11_63": "至於立教施行取信千載者。",
    "T51n2073_002:0161a11_64": "裕其一焉。",
    "T51n2073_002:0161a12_0": "釋慧藏。",
    "T51n2073_002:0161a12_1": "姓郝氏。",
    "T51n2073_002:0161a12_2": "趙國平棘人。",
    "T51n2073_002:0161a12_3": "十一出家。",
    "T51n2073_002:0161a12_4": "未登具戒。",
    "T51n2073_002:0161a13_5": "則講涅槃。",
    "T51n2073_002:0161a13_6": "後聽智論十地華嚴般若等。",
    "T51n2073_002:0161a14_0": "博見之舉。",
    "T51n2073_002:0161a14_1": "罕不伏焉。",
    "T51n2073_002:0161a14_2": "年踰不惑。",
    "T51n2073_002:0161a14_3": "乃潛千鵲山。",
    "T51n2073_002:0161a15_4": "枕石漱流。",
    "T51n2073_002:0161a15_5": "澄心玄奧。",
    "T51n2073_002:0161a15_6": "每研味群典。",
    "T51n2073_002:0161a15_7": "而以華嚴為本。",
    "T51n2073_002:0161a16_8": "雖洞盡幽微。",
    "T51n2073_002:0161a16_9": "而謙虛自退。",
    "T51n2073_002:0161a16_10": "仰詫聖助。",
    "T51n2073_002:0161a17_0": "希示是非。",
    "T51n2073_002:0161a17_1": "登時夜降靈感。",
    "T51n2073_002:0161a17_2": "空中有聲。",
    "T51n2073_002:0161a17_3": "言是是。",
    "T51n2073_002:0161a18_0": "既聞斯告。",
    "T51n2073_002:0161a18_1": "因撰義疏。",
    "T51n2073_002:0161a18_2": "躬自傳揚。",
    "T51n2073_002:0161a18_3": "往預學流。",
    "T51n2073_002:0161a19_0": "普皆飡攝。",
    "T51n2073_002:0161a19_1": "齊主武成降書。",
    "T51n2073_002:0161a19_2": "邀請於大極殿。",
    "T51n2073_002:0161a20_0": "開闡此經。",
    "T51n2073_002:0161a20_1": "法侶雲繁。",
    "T51n2073_002:0161a20_2": "士族咸集。",
    "T51n2073_002:0161a20_3": "時共榮之。",
    "T51n2073_002:0161a20_4": "為大觀盛也。",
    "T51n2073_002:0161a21_5": "自爾專弘此部。",
    "T51n2073_002:0161a21_6": "傳習彌布。",
    "T51n2073_002:0161a21_7": "屬周毀經道。",
    "T51n2073_002:0161a22_8": "剗迹人間。",
    "T51n2073_002:0161a22_9": "拪息煙霞。",
    "T51n2073_002:0161a22_10": "保護玄納。",
    "T51n2073_002:0161a22_11": "隋初開法則預出家。",
    "T51n2073_002:0161a23_12": "文帝曩敬德音。",
    "T51n2073_002:0161a23_13": "遠遣徵請。",
    "T51n2073_002:0161a24_0": "蒲輪既降。",
    "T51n2073_002:0161a24_1": "謁帝承明。",
    "T51n2073_002:0161a24_2": "遂陳玄奧。",
    "T51n2073_002:0161a24_3": "允副天旨。",
    "T51n2073_002:0161a24_4": "則六大德之一也。",
    "T51n2073_002:0161a25_5": "有勅。",
    "T51n2073_002:0161a25_6": "加之殊禮。",
    "T51n2073_002:0161a25_7": "故二紀之內。",
    "T51n2073_002:0161a26_0": "四時不墜焉。",
    "T51n2073_002:0161a26_1": "以大業元年十一月二十九日。",
    "T51n2073_002:0161a27_0": "遘疾卒于空觀寺。",
    "T51n2073_002:0161a27_1": "春秋八十有四。",
    "T51n2073_002:0161a27_2": "臨終屬使露骸。",
    "T51n2073_002:0161a28_3": "弟子奉遵遺訣。",
    "T51n2073_002:0161a28_4": "陳屍林麓。",
    "T51n2073_002:0161a28_5": "掩骸修塔。",
    "T51n2073_002:0161a29_0": "樹于終南至相寺之前峯焉。",
    "T51n2073_002:0161b01_0": "釋靈幹。",
    "T51n2073_002:0161b01_1": "姓李氏。",
    "T51n2073_002:0161b01_2": "金城狄道人。",
    "T51n2073_002:0161b01_3": "祖相封於上黨。",
    "T51n2073_002:0161b02_0": "遂隨封而遷焉。",
    "T51n2073_002:0161b02_1": "年十歲志樂聞法。",
    "T51n2073_002:0161b02_2": "情欣背俗。",
    "T51n2073_002:0161b03_0": "親弗違之。",
    "T51n2073_002:0161b03_1": "十四投鄴京大莊嚴寺衍法師為弟子。",
    "T51n2073_002:0161b04_2": "晝夜遵奉。",
    "T51n2073_002:0161b04_3": "無怠寸陰。",
    "T51n2073_002:0161b04_4": "而每入講堂。",
    "T51n2073_002:0161b04_5": "想處天宮無異也。",
    "T51n2073_002:0161b05_6": "十八覆講華嚴十地。",
    "T51n2073_002:0161b05_7": "初開宗本。",
    "T51n2073_002:0161b06_0": "僉共美之。",
    "T51n2073_002:0161b06_1": "周武滅法。",
    "T51n2073_002:0161b06_2": "居家奉戒。",
    "T51n2073_002:0161b06_3": "隋開佛日。",
    "T51n2073_002:0161b06_4": "則當高選。",
    "T51n2073_002:0161b07_5": "幹每講此經。",
    "T51n2073_002:0161b07_6": "亟延涼燠。",
    "T51n2073_002:0161b07_7": "四方進結。",
    "T51n2073_002:0161b07_8": "塵接相望。",
    "T51n2073_002:0161b08_9": "開皇七年。",
    "T51n2073_002:0161b08_10": "勅令住興善寺。",
    "T51n2073_002:0161b08_11": "為譯經證義沙門。",
    "T51n2073_002:0161b09_12": "至十七年。",
    "T51n2073_002:0161b09_13": "遇疾悶絕。",
    "T51n2073_002:0161b09_14": "唯心不冷。",
    "T51n2073_002:0161b09_15": "未敢藏殯。",
    "T51n2073_002:0161b10_16": "後醒云。",
    "T51n2073_002:0161b10_17": "我往兜率天。",
    "T51n2073_002:0161b10_18": "見休遠二法師。",
    "T51n2073_002:0161b10_19": "竝坐華臺。",
    "T51n2073_002:0161b11_20": "光暉絕世。",
    "T51n2073_002:0161b11_21": "謂幹曰。",
    "T51n2073_002:0161b11_22": "汝與我諸弟子。",
    "T51n2073_002:0161b11_23": "後皆生此矣。",
    "T51n2073_002:0161b12_24": "因爾覺悟。",
    "T51n2073_002:0161b12_25": "重增故業。",
    "T51n2073_002:0161b12_26": "端然觀行。",
    "T51n2073_002:0161b12_27": "絕交人物。",
    "T51n2073_002:0161b13_28": "及大業三年。",
    "T51n2073_002:0161b13_29": "置大禪定。",
    "T51n2073_002:0161b13_30": "有勅擢為道場上座。",
    "T51n2073_002:0161b14_31": "僧徒一盛。",
    "T51n2073_002:0161b14_32": "匡救有功。",
    "T51n2073_002:0161b14_33": "至八年正月卒於寺。",
    "T51n2073_002:0161b15_34": "春秋七十有八。",
    "T51n2073_002:0161b15_35": "乃火葬於終南之陰。",
    "T51n2073_002:0161b15_36": "初幹志奉華嚴。",
    "T51n2073_002:0161b16_37": "常依經本。",
    "T51n2073_002:0161b16_38": "作蓮華藏世界海觀及彌勒天宮觀。",
    "T51n2073_002:0161b17_39": "至于疾甚。",
    "T51n2073_002:0161b17_40": "目精上視。",
    "T51n2073_002:0161b17_41": "不與人對。",
    "T51n2073_002:0161b18_42": "久乃如常。",
    "T51n2073_002:0161b18_43": "沙門童真問疾在側。",
    "T51n2073_002:0161b18_44": "幹謂真曰。",
    "T51n2073_002:0161b19_0": "向見青衣童子引至兜率天宮。",
    "T51n2073_002:0161b19_1": "而天樂非久。",
    "T51n2073_002:0161b20_0": "終墜輪迴。",
    "T51n2073_002:0161b20_1": "蓮華藏是所圖也。",
    "T51n2073_002:0161b20_2": "不久氣絕。",
    "T51n2073_002:0161b20_3": "須臾復通。",
    "T51n2073_002:0161b21_4": "真問。",
    "T51n2073_002:0161b21_5": "何所見耶。",
    "T51n2073_002:0161b21_6": "幹曰。",
    "T51n2073_002:0161b21_7": "見大水遍滿。",
    "T51n2073_002:0161b21_8": "華如車輪。",
    "T51n2073_002:0161b22_9": "幹坐其上。",
    "T51n2073_002:0161b22_10": "所願足矣。",
    "T51n2073_002:0161b22_11": "尋爾便卒。",
    "T51n2073_002:0161b23_0": "華嚴經傳記卷第二"
}