[
    {
        "source_sentence": "氷揭羅天童子經",
        "from": "T21n1263_001:0291c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "特進試鴻臚卿大興善寺三藏",
        "from": "T21n1263_001:0291c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門大廣智不空奉　詔譯",
        "from": "T21n1263_001:0291c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有行者持此明者。",
        "from": "T21n1263_001:0291c11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或能乞食或專喫乳粥或能自食。",
        "from": "T21n1263_001:0291c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於像前持誦滿三十萬遍。",
        "from": "T21n1263_001:0291c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後作火法。",
        "from": "T21n1263_001:0291c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取玉柔作一千八片。",
        "from": "T21n1263_001:0291c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一誦一擲火中燒。",
        "from": "T21n1263_001:0291c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時滿四十日。",
        "from": "T21n1263_001:0291c14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證云云所求皆遂。",
        "from": "T21n1263_001:0291c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取玉柔和安悉香作丸。",
        "from": "T21n1263_001:0291c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從黑月八日起首終十四日。",
        "from": "T21n1263_001:0291c17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日別三時時別誦一千八遍。",
        "from": "T21n1263_001:0291c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前丸擲火中。",
        "from": "T21n1263_001:0291c18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其童子或晝或夜。",
        "from": "T21n1263_001:0291c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必來現身而為伴侶滿一切願。",
        "from": "T21n1263_001:0291c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "任意使令無不諧剋。",
        "from": "T21n1263_001:0291c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取安悉香作丸。",
        "from": "T21n1263_001:0291c20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七日中每日三時。",
        "from": "T21n1263_001:0291c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時別一千八遍。",
        "from": "T21n1263_001:0291c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一誦一擲一丸火中。",
        "from": "T21n1263_001:0291c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必獲邑主無事不果。",
        "from": "T21n1263_001:0291c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其行者欲行此法時。",
        "from": "T21n1263_001:0291c23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先應誦七十萬遍。",
        "from": "T21n1263_001:0291c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "造像法。",
        "from": "T21n1263_001:0291c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其像用白檀香木。",
        "from": "T21n1263_001:0291c24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長六指作童子形狀。",
        "from": "T21n1263_001:0291c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左手把菓右手垂作滿願掌向外。",
        "from": "T21n1263_001:0291c25_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置道場中。",
        "from": "T21n1263_001:0291c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作種種飲食乳粥香花供養。",
        "from": "T21n1263_001:0291c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取赤色花。",
        "from": "T21n1263_001:0291c26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每花一誦一擲童子身上。",
        "from": "T21n1263_001:0291c27_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿十萬遍其童子必來現身。",
        "from": "T21n1263_001:0291c28_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得滿一切願。",
        "from": "T21n1263_001:0291c28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日施千人上妙衣食無所闕乏。",
        "from": "T21n1263_001:0291c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法每日三時。",
        "from": "T21n1263_001:0292a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時別取蘇合香作一千八丸。",
        "from": "T21n1263_001:0292a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於火中滿七日已。",
        "from": "T21n1263_001:0292a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其童子現身指授伏藏。",
        "from": "T21n1263_001:0292a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能日日受持獲大利益示其寶藏。",
        "from": "T21n1263_001:0292a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及修羅窟穴亦然。",
        "from": "T21n1263_001:0292a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "指授必滿其願得大財寶。",
        "from": "T21n1263_001:0292a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人被拘縶時。",
        "from": "T21n1263_001:0292a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當誦此明即得解脫。",
        "from": "T21n1263_001:0292a05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法欲令一切人見即歡喜。",
        "from": "T21n1263_001:0292a06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱彼人名誦滿十萬遍即皆歡喜。",
        "from": "T21n1263_001:0292a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法取無憂木。",
        "from": "T21n1263_001:0292a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於高山頂上燒之。",
        "from": "T21n1263_001:0292a08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和安悉香作一千八丸擲火中。",
        "from": "T21n1263_001:0292a09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得安穩成就欲令見即見壽命千歲。",
        "from": "T21n1263_001:0292a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陀羅尼真言曰。",
        "from": "T21n1263_001:0292a11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􇩂唵􄓜㨖􄙘苾部必反􄓜㨖􄖫儞􅁥娑嚩􄚩訶又一本云。",
        "from": "T21n1263_001:0292a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􇩂唵􄓜㨖􄒶惹􄓜㨖􄖫儞􅁥娑嚩􄚩訶其根本契者。",
        "from": "T21n1263_001:0292a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手虛心合掌。",
        "from": "T21n1263_001:0292a17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若召請時以禪智三度來去。",
        "from": "T21n1263_001:0292a18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若發遣時外撥三度。",
        "from": "T21n1263_001:0292a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請火天明契　真言曰。",
        "from": "T21n1263_001:0292a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􇩂唵􆿅阿􅍉祁那􄗷曳􆿅阿􄑘蘖􆿅􄑘阿蘖􅁥莎􄚩訶發遣明曰。",
        "from": "T21n1263_001:0292a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􆿅阿􅍉祁那􄗷曳􄑘蘖􇩹車􄑘􇩹蘖車􅁥莎􄚩訶其契相者。",
        "from": "T21n1263_001:0292a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手屈大指於掌中。",
        "from": "T21n1263_001:0292a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指屈如鉤。",
        "from": "T21n1263_001:0292a25_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以柱大指背當下節。",
        "from": "T21n1263_001:0292a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘並舒之。",
        "from": "T21n1263_001:0292a26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "召請時但以頭指三招。",
        "from": "T21n1263_001:0292a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若發遣時外撥三度即是。",
        "from": "T21n1263_001:0292a27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身契明曰。",
        "from": "T21n1263_001:0292a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "􇩂唵􄥏俱嚕􄕻馱􄖩曩􆿁𤙖􄓁惹其契者以右手作拳。",
        "from": "T21n1263_001:0292b03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪大指觸身五處即未然護。",
        "from": "T21n1263_001:0292b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氷揭羅天童子經保延三年七月二十三日於仲川之寫了一校了承安四年甲午十二月二十日以三本交合傳受玄證本也",
        "from": "T21n1263_001:0292b09_100",
        "context_with_next_sentence": false
    }
]