{
    "T47n1984_001:0490c21_0": "往生淨土懺願儀",
    "T47n1984_001:0490c23_0": "(沙門遵式輒采大本無量壽經。",
    "T47n1984_001:0490c23_1": "及稱讚淨土等諸大乘經。",
    "T47n1984_001:0490c24_2": "集此方法流布諸後。",
    "T47n1984_001:0490c24_3": "普結淨緣)。",
    "T47n1984_001:0490c25_0": "原其諸佛憫物迷盲。",
    "T47n1984_001:0490c25_1": "設多方便而引取之。",
    "T47n1984_001:0490c25_2": "但誰安養淨業捷直可修。",
    "T47n1984_001:0490c26_3": "諸大乘經皆啟斯要。",
    "T47n1984_001:0490c27_0": "十方諸佛無不稱美者也。",
    "T47n1984_001:0490c27_1": "若比丘四眾及善男女。",
    "T47n1984_001:0490c28_2": "諸根缺具者。",
    "T47n1984_001:0490c28_3": "欲得速破無明諸闇。",
    "T47n1984_001:0490c28_4": "欲得永滅五逆十惡。",
    "T47n1984_001:0490c29_5": "犯禁重罪及餘輕過。",
    "T47n1984_001:0490c29_6": "當修此法。",
    "T47n1984_001:0491a01_7": "欲得還復清淨。",
    "T47n1984_001:0491a01_8": "大小戒律現前。",
    "T47n1984_001:0491a01_9": "得念佛三昧。",
    "T47n1984_001:0491a02_10": "及能具足一切菩薩諸波羅密門者。",
    "T47n1984_001:0491a02_11": "當學此法。",
    "T47n1984_001:0491a03_12": "欲得臨終離諸怖畏。",
    "T47n1984_001:0491a03_13": "身心安快喜悅如歸。",
    "T47n1984_001:0491a04_14": "光照室宅。",
    "T47n1984_001:0491a04_15": "異香音樂。",
    "T47n1984_001:0491a04_16": "阿彌陀佛觀音勢至現在其前。",
    "T47n1984_001:0491a05_17": "送紫金臺授手接引。",
    "T47n1984_001:0491a05_18": "五道橫截九品長騖。",
    "T47n1984_001:0491a06_19": "謝去熱惱安息清涼。",
    "T47n1984_001:0491a06_20": "初離塵勞便至不退。",
    "T47n1984_001:0491a07_21": "不歷長劫即得無生者。",
    "T47n1984_001:0491a07_22": "當學是法。",
    "T47n1984_001:0491a07_23": "欲修少法而感妙報。",
    "T47n1984_001:0491a08_24": "十方諸佛俱時稱讚現前授記。",
    "T47n1984_001:0491a09_25": "一念供養無央數佛即還本國。",
    "T47n1984_001:0491a09_26": "與彌陀坐食。",
    "T47n1984_001:0491a10_27": "觀音議論。",
    "T47n1984_001:0491a10_28": "勢至行步。",
    "T47n1984_001:0491a10_29": "眼耳洞視徹聞。",
    "T47n1984_001:0491a10_30": "身量無際飛空。",
    "T47n1984_001:0491a11_31": "自在宿命了了。",
    "T47n1984_001:0491a11_32": "遍見五道如鏡面像。",
    "T47n1984_001:0491a12_33": "念念證入無盡三昧。",
    "T47n1984_001:0491a12_34": "如是稱述不可窮盡。",
    "T47n1984_001:0491a13_35": "應當修習此之勝法。",
    "T47n1984_001:0491a13_36": "如所說者皆實不虛。",
    "T47n1984_001:0491a14_0": "十方諸佛出廣長舌。",
    "T47n1984_001:0491a14_1": "稱美此事以示不妄。",
    "T47n1984_001:0491a14_2": "我等云何敢不信佛。",
    "T47n1984_001:0491a15_3": "今取淨土眾經立此行法。",
    "T47n1984_001:0491a16_0": "若欲廣知尋經補益。",
    "T47n1984_001:0491a16_1": "且聊為十科說之。",
    "T47n1984_001:0491a16_2": "一嚴淨道場。",
    "T47n1984_001:0491a17_3": "二明方便法。",
    "T47n1984_001:0491a17_4": "三明正修意。",
    "T47n1984_001:0491a17_5": "四燒香散華。",
    "T47n1984_001:0491a18_6": "五禮請法。",
    "T47n1984_001:0491a18_7": "六讚歎法。",
    "T47n1984_001:0491a18_8": "七禮佛法。",
    "T47n1984_001:0491a18_9": "八懺願法。",
    "T47n1984_001:0491a19_10": "九旋誦法。",
    "T47n1984_001:0491a19_11": "十坐禪法。",
    "T47n1984_001:0491a20_0": "第一嚴淨道場當選閑靜堂室。",
    "T47n1984_001:0491a20_1": "先去舊土。",
    "T47n1984_001:0491a20_2": "後於靜處取新土。",
    "T47n1984_001:0491a21_3": "須地無瓦石。",
    "T47n1984_001:0491a21_4": "及先非穢染用填其地。",
    "T47n1984_001:0491a22_5": "以香和塗極令清淨。",
    "T47n1984_001:0491a22_6": "次於其上懸新寶蓋。",
    "T47n1984_001:0491a23_7": "蓋中懸五雜旛。",
    "T47n1984_001:0491a23_8": "及遍室懸諸繒綵旛華。",
    "T47n1984_001:0491a24_0": "取好莊嚴。",
    "T47n1984_001:0491a24_1": "安佛像西坐東向。",
    "T47n1984_001:0491a24_2": "觀音侍左。",
    "T47n1984_001:0491a24_3": "勢至侍右。",
    "T47n1984_001:0491a25_4": "像前列眾好華及蓮華等。",
    "T47n1984_001:0491a25_5": "若安九往生像最好。",
    "T47n1984_001:0491a26_6": "無亦無妨。",
    "T47n1984_001:0491a26_7": "餘者嚴事隨力安之。",
    "T47n1984_001:0491a26_8": "次周設薦席慮地卑濕。",
    "T47n1984_001:0491a27_9": "行人須新淨衣如絕無新淨。",
    "T47n1984_001:0491a28_10": "即浣染身中上者。",
    "T47n1984_001:0491a28_11": "浴後披著方入道場。",
    "T47n1984_001:0491a28_12": "應從門頰左右出入。",
    "T47n1984_001:0491a29_13": "鞋履齊正不得雜亂。",
    "T47n1984_001:0491a29_14": "其所往時須換故衣。",
    "T47n1984_001:0491b01_15": "沐浴後却著淨衣。",
    "T47n1984_001:0491b01_16": "日日如是。",
    "T47n1984_001:0491b02_0": "次於道場。",
    "T47n1984_001:0491b02_1": "當自傾竭種種供養三寶。",
    "T47n1984_001:0491b02_2": "若不盡其所有供養。",
    "T47n1984_001:0491b03_3": "行法不專必無感降。",
    "T47n1984_001:0491b03_4": "如絕無己物方可外求。",
    "T47n1984_001:0491b04_5": "行者十人已還。",
    "T47n1984_001:0491b04_6": "多則不可。",
    "T47n1984_001:0491b04_7": "宜於六齋日建首。",
    "T47n1984_001:0491b06_0": "第二明方便法",
    "T47n1984_001:0491b07_0": "行者欲入道場身心散亂。",
    "T47n1984_001:0491b07_1": "須預行方便。",
    "T47n1984_001:0491b07_2": "當於七日營理別房。",
    "T47n1984_001:0491b08_3": "不得與道場同處。",
    "T47n1984_001:0491b08_4": "如無別屋亦許共室。",
    "T47n1984_001:0491b09_5": "應日夜調習案試。",
    "T47n1984_001:0491b09_6": "及預誦下五悔等文。",
    "T47n1984_001:0491b10_7": "極令精熟即通。",
    "T47n1984_001:0491b10_8": "染浣紉縫及中辦事。",
    "T47n1984_001:0491b10_9": "餘治生雜務即時併息。",
    "T47n1984_001:0491b11_10": "但念不久定生淨土。",
    "T47n1984_001:0491b11_11": "一心求懺無有留難。",
    "T47n1984_001:0491b12_12": "各自剋期不惜身命。",
    "T47n1984_001:0491b12_13": "定取淨業即時成就。",
    "T47n1984_001:0491b13_14": "不得一念思憶五塵。",
    "T47n1984_001:0491b13_15": "訶去愛欲勤息恚癡。",
    "T47n1984_001:0491b14_16": "行人各有無始惡習。",
    "T47n1984_001:0491b14_17": "速求捨離。",
    "T47n1984_001:0491b15_0": "不為正懺。",
    "T47n1984_001:0491b15_1": "障礙自當觀察。",
    "T47n1984_001:0491b15_2": "何習偏重。",
    "T47n1984_001:0491b15_3": "訶棄調停。",
    "T47n1984_001:0491b16_4": "取令平復。",
    "T47n1984_001:0491b16_5": "勿使行法唐喪其功。",
    "T47n1984_001:0491b16_6": "可以意解。",
    "T47n1984_001:0491b18_0": "第三明正修意",
    "T47n1984_001:0491b19_0": "大集明七七日。",
    "T47n1984_001:0491b19_1": "鼓音王及大彌陀經十日十夜。",
    "T47n1984_001:0491b20_2": "十六觀經及小彌陀經。",
    "T47n1984_001:0491b20_3": "明七日七夜。",
    "T47n1984_001:0491b20_4": "取此三等為期。",
    "T47n1984_001:0491b21_5": "決不可減。",
    "T47n1984_001:0491b21_6": "言正修意者。",
    "T47n1984_001:0491b21_7": "天親論曰。",
    "T47n1984_001:0491b22_0": "明何義觀安樂世界見阿彌陀佛。",
    "T47n1984_001:0491b22_1": "願生彼國土。",
    "T47n1984_001:0491b23_2": "云何觀。",
    "T47n1984_001:0491b23_3": "云何生信心。",
    "T47n1984_001:0491b23_4": "修五念門成就者。",
    "T47n1984_001:0491b23_5": "畢竟得生安樂國土。",
    "T47n1984_001:0491b24_6": "見阿彌陀佛。",
    "T47n1984_001:0491b24_7": "何等為五。",
    "T47n1984_001:0491b24_8": "一者禮拜門。",
    "T47n1984_001:0491b25_9": "二者讚歎門。",
    "T47n1984_001:0491b25_10": "三者作願門。",
    "T47n1984_001:0491b25_11": "四者觀察門。",
    "T47n1984_001:0491b26_12": "五者迴向門。",
    "T47n1984_001:0491b26_13": "乃至菩薩巧方便迴向者。",
    "T47n1984_001:0491b27_0": "謂說禮拜等五種修行。",
    "T47n1984_001:0491b27_1": "所集一切功德善根。",
    "T47n1984_001:0491b28_0": "不求自身住持之樂。",
    "T47n1984_001:0491b28_1": "欲拔一切眾生苦故。",
    "T47n1984_001:0491b28_2": "作願攝取一切眾生。",
    "T47n1984_001:0491b29_3": "共生彼安樂佛國。",
    "T47n1984_001:0491b29_4": "是名菩薩巧方便迴向。",
    "T47n1984_001:0491c01_5": "如是善知迴向。",
    "T47n1984_001:0491c01_6": "得三種順菩提門。",
    "T47n1984_001:0491c02_7": "一者無染清淨心。",
    "T47n1984_001:0491c02_8": "不為自身求諸樂故。",
    "T47n1984_001:0491c03_0": "二者安清淨心。",
    "T47n1984_001:0491c03_1": "以拔一切眾生苦故。",
    "T47n1984_001:0491c03_2": "三者樂清淨心。",
    "T47n1984_001:0491c04_3": "令一切眾生得大菩提。",
    "T47n1984_001:0491c04_4": "以攝取眾生生彼國土故。",
    "T47n1984_001:0491c05_5": "故全用論文為今正意。",
    "T47n1984_001:0491c05_6": "但加懺悔者。",
    "T47n1984_001:0491c06_7": "為令除滅往生障故。",
    "T47n1984_001:0491c06_8": "為順佛慈速度生故。",
    "T47n1984_001:0491c07_9": "當須一心一意滿七七日。",
    "T47n1984_001:0491c07_10": "乃至七日晝夜六時。",
    "T47n1984_001:0491c08_11": "禮十方佛及彌陀世尊。",
    "T47n1984_001:0491c08_12": "若坐若行皆勿散亂。",
    "T47n1984_001:0491c09_13": "不得如彈指頃念世五欲。",
    "T47n1984_001:0491c09_14": "及接對外人語論戲笑。",
    "T47n1984_001:0491c10_15": "亦不得託事延緩放逸睡眠。",
    "T47n1984_001:0491c10_16": "當於瞬息俯仰繫念不斷。",
    "T47n1984_001:0491c11_17": "為求往生一心精進。",
    "T47n1984_001:0491c11_18": "問行法既多。",
    "T47n1984_001:0491c12_19": "云何一心。",
    "T47n1984_001:0491c12_20": "答有理有事。",
    "T47n1984_001:0491c12_21": "一者理一心。",
    "T47n1984_001:0491c13_22": "謂初入道場。",
    "T47n1984_001:0491c13_23": "乃至畢竟雖涉眾事。",
    "T47n1984_001:0491c13_24": "皆是無性不生不滅。",
    "T47n1984_001:0491c14_25": "法界一相如法界緣。",
    "T47n1984_001:0491c14_26": "名理一心。",
    "T47n1984_001:0491c15_0": "二者事一心。",
    "T47n1984_001:0491c15_1": "謂若禮佛時。",
    "T47n1984_001:0491c15_2": "不念餘事。",
    "T47n1984_001:0491c15_3": "但專禮佛。",
    "T47n1984_001:0491c16_4": "誦經行道亦復如是。",
    "T47n1984_001:0491c16_5": "是名事一心也。",
    "T47n1984_001:0491c17_0": "第四燒香散華(行者已淨三業。",
    "T47n1984_001:0491c17_1": "初入道場時。",
    "T47n1984_001:0491c17_2": "先當正立思惟。",
    "T47n1984_001:0491c17_3": "我為眾生。",
    "T47n1984_001:0491c17_4": "發菩提心。",
    "T47n1984_001:0491c17_5": "願求淨土故。",
    "T47n1984_001:0491c18_6": "總禮三寶。",
    "T47n1984_001:0491c18_7": "廣修供養。",
    "T47n1984_001:0491c18_8": "三寶受供。",
    "T47n1984_001:0491c18_9": "必當念我。",
    "T47n1984_001:0491c18_10": "隨我請求。",
    "T47n1984_001:0491c18_11": "證知我願。",
    "T47n1984_001:0491c18_12": "此燒香散華。",
    "T47n1984_001:0491c18_13": "亦名三業供養。",
    "T47n1984_001:0491c18_14": "初總禮三寶。",
    "T47n1984_001:0491c19_15": "未須一一隨方想念。",
    "T47n1984_001:0491c19_16": "但想己身及十方諸佛。",
    "T47n1984_001:0491c19_17": "實相理體本無能所。",
    "T47n1984_001:0491c19_18": "故無能禮所禮。",
    "T47n1984_001:0491c19_19": "想無能所名法界海。",
    "T47n1984_001:0491c19_20": "願諸眾生同見此理。",
    "T47n1984_001:0491c20_21": "名為同入。",
    "T47n1984_001:0491c20_22": "首者先當唱云)一切恭敬一心敬禮十方法界常住佛。",
    "T47n1984_001:0491c22_0": "一心敬禮十方法界常住法。",
    "T47n1984_001:0491c23_0": "一心敬禮十方法界常住僧(唱已各執香爐。",
    "T47n1984_001:0491c23_1": "[跍*月]跪復云)。",
    "T47n1984_001:0491c24_0": "是諸眾等各各[跍*月]跪。",
    "T47n1984_001:0491c24_1": "嚴持香華如法供養。",
    "T47n1984_001:0491c24_2": "供養十方法界三寶(至此輟唱。",
    "T47n1984_001:0491c25_3": "各放香爐。",
    "T47n1984_001:0491c25_4": "手捧散華。",
    "T47n1984_001:0491c25_5": "廣作供養。",
    "T47n1984_001:0491c25_6": "想云願此香華遍十方。",
    "T47n1984_001:0491c25_7": "以為微妙光明臺。",
    "T47n1984_001:0491c26_8": "諸天音樂天寶香。",
    "T47n1984_001:0491c26_9": "諸天餚饍天寶衣。",
    "T47n1984_001:0491c26_10": "不可思議妙法塵。",
    "T47n1984_001:0491c26_11": "一一塵出一切塵。",
    "T47n1984_001:0491c26_12": "一一塵出一切法。",
    "T47n1984_001:0491c26_13": "旋轉無礙互莊嚴。",
    "T47n1984_001:0491c27_14": "遍至十方三寶前。",
    "T47n1984_001:0491c27_15": "十方法界三寶前。",
    "T47n1984_001:0491c27_16": "皆有我身修供養。",
    "T47n1984_001:0491c27_17": "一一皆悉遍法界。",
    "T47n1984_001:0491c27_18": "彼彼無雜無障礙。",
    "T47n1984_001:0491c27_19": "盡未來際作佛事。",
    "T47n1984_001:0491c28_20": "普熏法界諸眾生。",
    "T47n1984_001:0491c28_21": "蒙熏皆發菩提心。",
    "T47n1984_001:0491c28_22": "同入無生證佛智。",
    "T47n1984_001:0491c28_23": "想已散華。",
    "T47n1984_001:0491c28_24": "執手爐口發是言)。",
    "T47n1984_001:0492a01_0": "願此香華雲。",
    "T47n1984_001:0492a01_1": "遍滿十方界。",
    "T47n1984_001:0492a01_2": "供養一切佛。",
    "T47n1984_001:0492a01_3": "尊法諸菩薩。",
    "T47n1984_001:0492a02_4": "無量聲聞眾。",
    "T47n1984_001:0492a02_5": "以起光明臺。",
    "T47n1984_001:0492a02_6": "過於無邊界。",
    "T47n1984_001:0492a03_7": "無邊佛土中。",
    "T47n1984_001:0492a03_8": "受用作佛事。",
    "T47n1984_001:0492a03_9": "普熏諸眾生。",
    "T47n1984_001:0492a03_10": "皆發菩提心(皆發下一句接和供養下獨唱)。",
    "T47n1984_001:0492a05_0": "供養已一切恭敬(起已一拜)。",
    "T47n1984_001:0492a06_0": "第五禮請法(當更添香如前[跍*月]跪。",
    "T47n1984_001:0492a06_1": "執香爐端意勤重。",
    "T47n1984_001:0492a06_2": "遍請三寶來入道場。",
    "T47n1984_001:0492a06_3": "不可輕率延屈至尊。",
    "T47n1984_001:0492a06_4": "當須三業併切一心奉請。",
    "T47n1984_001:0492a07_5": "若不爾者虛請無益。",
    "T47n1984_001:0492a07_6": "各想一一如來隨其方面。",
    "T47n1984_001:0492a07_7": "領諸眷屬入我道場。",
    "T47n1984_001:0492a07_8": "如住目前畟塞虛空。",
    "T47n1984_001:0492a07_9": "不得剎那起於雜念。",
    "T47n1984_001:0492a08_10": "但初八日迎請。",
    "T47n1984_001:0492a08_11": "餘時不用。",
    "T47n1984_001:0492a08_12": "首人唱云)一心奉請。",
    "T47n1984_001:0492a09_13": "南無本師釋迦牟尼佛(釋迦是我等師。",
    "T47n1984_001:0492a09_14": "說諸大乘令我修淨土業。",
    "T47n1984_001:0492a10_15": "故須初請。",
    "T47n1984_001:0492a10_16": "當各運心感此恩德。",
    "T47n1984_001:0492a10_17": "如是三請。",
    "T47n1984_001:0492a10_18": "每一遍請時想云。",
    "T47n1984_001:0492a10_19": "我三業性如虛空。",
    "T47n1984_001:0492a10_20": "釋迦如來亦如是。",
    "T47n1984_001:0492a10_21": "不起真際為眾生。",
    "T47n1984_001:0492a11_22": "與眾俱來受供養。",
    "T47n1984_001:0492a11_23": "下共例為三請)。",
    "T47n1984_001:0492a12_0": "一心奉請。",
    "T47n1984_001:0492a12_1": "南無過去久遠劫中。",
    "T47n1984_001:0492a12_2": "定光佛光遠佛龍音佛等五十三佛(五十三佛即法藏比丘未出世前。",
    "T47n1984_001:0492a13_3": "次第有此諸佛五十四。",
    "T47n1984_001:0492a14_4": "方是世自在王佛為法藏師。",
    "T47n1984_001:0492a14_5": "請時應知之想偈同前。",
    "T47n1984_001:0492a14_6": "但改佛名)。",
    "T47n1984_001:0492a15_0": "一心奉請。",
    "T47n1984_001:0492a15_1": "南無過去久滅世自在王佛(世王佛即法藏本師。",
    "T47n1984_001:0492a16_2": "依彼佛所發四十八願。",
    "T47n1984_001:0492a16_3": "請時須知之。",
    "T47n1984_001:0492a16_4": "偈同前。",
    "T47n1984_001:0492a16_5": "改云自在王佛亦如是。",
    "T47n1984_001:0492a16_6": "此佛并前五十三佛。",
    "T47n1984_001:0492a16_7": "出大本無量壽佛經)。",
    "T47n1984_001:0492a17_0": "一心奉請。",
    "T47n1984_001:0492a17_1": "南無十方現在不動佛等。",
    "T47n1984_001:0492a17_2": "盡十方河沙淨土一切諸佛(此十方諸佛。",
    "T47n1984_001:0492a18_3": "皆出廣長舌相。",
    "T47n1984_001:0492a18_4": "遍覆大千稱讚極樂。",
    "T47n1984_001:0492a18_5": "是故須請求護念故。",
    "T47n1984_001:0492a19_6": "出稱讚淨土經。",
    "T47n1984_001:0492a19_7": "請時應想。",
    "T47n1984_001:0492a19_8": "從彼十方來。",
    "T47n1984_001:0492a19_9": "改偈云。",
    "T47n1984_001:0492a19_10": "十方諸佛亦如是。",
    "T47n1984_001:0492a19_11": "餘皆同前)。",
    "T47n1984_001:0492a20_0": "一心奉請。",
    "T47n1984_001:0492a20_1": "南無往世七佛。",
    "T47n1984_001:0492a20_2": "未來賢劫千佛。",
    "T47n1984_001:0492a20_3": "三世一切諸佛。",
    "T47n1984_001:0492a22_0": "一心奉請。",
    "T47n1984_001:0492a22_1": "南無極樂世界阿彌陀佛(彌陀是懺願之主。",
    "T47n1984_001:0492a22_2": "應想領無邊眷屬。",
    "T47n1984_001:0492a23_3": "至我道場攝受護念。",
    "T47n1984_001:0492a23_4": "各各雨淚勤重三請。",
    "T47n1984_001:0492a23_5": "決定須來正坐道場。",
    "T47n1984_001:0492a23_6": "餘佛菩薩悉是證明。",
    "T47n1984_001:0492a23_7": "改偈如前。",
    "T47n1984_001:0492a23_8": "此最後請者。",
    "T47n1984_001:0492a24_9": "準普賢懺法應知)。",
    "T47n1984_001:0492a25_0": "一心奉請。",
    "T47n1984_001:0492a25_1": "南無大乘四十八願無量壽經。",
    "T47n1984_001:0492a25_2": "稱讚經等。",
    "T47n1984_001:0492a26_3": "及彼淨土所有經法。",
    "T47n1984_001:0492a26_4": "十方一切尊經。",
    "T47n1984_001:0492b01_0": "十二部真淨法寶(應想二處法寶。",
    "T47n1984_001:0492b01_1": "一十方法寶。",
    "T47n1984_001:0492b01_2": "二淨土法寶。",
    "T47n1984_001:0492b01_3": "想淨土法時。",
    "T47n1984_001:0492b01_4": "遍想佛菩薩水鳥樂樹皆說妙法。",
    "T47n1984_001:0492b02_5": "隨我請來顯現道場。",
    "T47n1984_001:0492b02_6": "令我道場如彼淨土無異。",
    "T47n1984_001:0492b02_7": "想云。",
    "T47n1984_001:0492b02_8": "法性如空無所見。",
    "T47n1984_001:0492b02_9": "二處法寶難思議。",
    "T47n1984_001:0492b03_0": "我今三業如法請。",
    "T47n1984_001:0492b03_1": "俱時顯現受供養)。",
    "T47n1984_001:0492b04_0": "一心奉請。",
    "T47n1984_001:0492b04_1": "南無文殊師利菩薩。",
    "T47n1984_001:0492b04_2": "普賢菩薩。",
    "T47n1984_001:0492b04_3": "無能勝菩薩。",
    "T47n1984_001:0492b05_4": "不休息菩薩等。",
    "T47n1984_001:0492b05_5": "一切菩薩摩訶薩(偈同請佛。",
    "T47n1984_001:0492b06_6": "但改云諸大菩薩亦如是。",
    "T47n1984_001:0492b06_7": "當請時想文殊普賢等皆在淨土。",
    "T47n1984_001:0492b06_8": "如願王經說)。",
    "T47n1984_001:0492b07_0": "一心奉請。",
    "T47n1984_001:0492b07_1": "南無極樂世界觀世音菩薩摩訶薩(想此菩薩坐蓮華座侍佛左邊。",
    "T47n1984_001:0492b08_2": "威德光明悉皆無量。",
    "T47n1984_001:0492b08_3": "偈同前作)。",
    "T47n1984_001:0492b09_0": "一心奉請。",
    "T47n1984_001:0492b09_1": "南無極樂世界大勢至菩薩摩訶薩(想此菩薩坐蓮華座侍佛右邊。",
    "T47n1984_001:0492b10_2": "亦如觀音不異)。",
    "T47n1984_001:0492b11_0": "一心奉請。",
    "T47n1984_001:0492b11_1": "南無過去阿僧祇劫法藏比丘菩薩摩訶薩(即彌陀因身。",
    "T47n1984_001:0492b12_2": "修行四十八願攝化眾生。",
    "T47n1984_001:0492b12_3": "當念此恩德。",
    "T47n1984_001:0492b12_4": "偈如前說)。",
    "T47n1984_001:0492b13_0": "一心奉請。",
    "T47n1984_001:0492b13_1": "南無極樂世界新發道意。",
    "T47n1984_001:0492b13_2": "無生不退一生補處諸大菩薩摩訶薩(經云不退及一生補處諸大菩薩。",
    "T47n1984_001:0492b14_3": "請時應如是想。",
    "T47n1984_001:0492b15_4": "偈如前)。",
    "T47n1984_001:0492b16_0": "一心奉請。",
    "T47n1984_001:0492b16_1": "南無此土舍利弗等。",
    "T47n1984_001:0492b16_2": "一切聲聞緣覺得道賢聖僧(想遍法界請賢聖僧)。",
    "T47n1984_001:0492b18_0": "一心奉請。",
    "T47n1984_001:0492b18_1": "此土梵釋四王一切天眾。",
    "T47n1984_001:0492b18_2": "摩羅天主。",
    "T47n1984_001:0492b19_3": "龍鬼諸王。",
    "T47n1984_001:0492b19_4": "閻羅五道主善罰惡守護正法護伽藍神。",
    "T47n1984_001:0492b20_5": "一切賢聖(例皆三請來此守護惟除禮拜應知)。",
    "T47n1984_001:0492b21_0": "上所奉請彌陀世尊。",
    "T47n1984_001:0492b21_1": "觀世音菩薩。",
    "T47n1984_001:0492b21_2": "大勢至菩薩。",
    "T47n1984_001:0492b22_3": "清淨海眾一切賢聖。",
    "T47n1984_001:0492b22_4": "唯願不捨大慈大悲。",
    "T47n1984_001:0492b23_0": "他心道眼無礙見聞身通自在。",
    "T47n1984_001:0492b23_1": "降來道場安住法座。",
    "T47n1984_001:0492b24_2": "光明遍照攝取我等。",
    "T47n1984_001:0492b24_3": "哀憐覆護令得成就菩提願行。",
    "T47n1984_001:0492b25_4": "釋迦文佛。",
    "T47n1984_001:0492b25_5": "定光佛等。",
    "T47n1984_001:0492b25_6": "世自在王佛。",
    "T47n1984_001:0492b26_7": "十方三世一切正覺。",
    "T47n1984_001:0492b26_8": "及文殊師利菩薩。",
    "T47n1984_001:0492b27_0": "普賢菩薩。",
    "T47n1984_001:0492b27_1": "三乘聖眾。",
    "T47n1984_001:0492b27_2": "唯願悉來慈悲攝護。",
    "T47n1984_001:0492b27_3": "諸天魔梵龍鬼等眾。",
    "T47n1984_001:0492b28_4": "護法諸神一切賢聖。",
    "T47n1984_001:0492b28_5": "悉到道場安慰堅守同成淨行(三說)。",
    "T47n1984_001:0492c02_0": "第六讚歎法(當起立恭敬合掌。",
    "T47n1984_001:0492c02_1": "想此身正對彌陀及一一佛前說偈讚願云)　色如閻浮金　　面逾淨滿月　身光智慧明　　所照無邊際　降伏魔冤眾　　善化諸人天　乘彼八正船　　能度難度者　聞名得不退　　是故歸命禮以此歎佛功德。",
    "T47n1984_001:0492c08_2": "修行大乘無上善根。",
    "T47n1984_001:0492c08_3": "奉福上界天龍八部大梵天王三十三天。",
    "T47n1984_001:0492c09_4": "閻羅五道六齋八王。",
    "T47n1984_001:0492c10_5": "行病鬼王各及眷屬。",
    "T47n1984_001:0492c10_6": "此土神祇僧伽藍內護正法者。",
    "T47n1984_001:0492c11_7": "又為國王帝主土境萬民。",
    "T47n1984_001:0492c12_0": "師僧父母善惡知識。",
    "T47n1984_001:0492c12_1": "造寺檀越十方信施。",
    "T47n1984_001:0492c12_2": "廣及法界眾生。",
    "T47n1984_001:0492c13_3": "願藉此善根平等熏修。",
    "T47n1984_001:0492c13_4": "功德智慧二種莊嚴。",
    "T47n1984_001:0492c14_5": "臨命終時俱生樂國。",
    "T47n1984_001:0492c15_0": "第七禮佛法(讚歎竟。",
    "T47n1984_001:0492c15_1": "應禮諸佛。",
    "T47n1984_001:0492c15_2": "當禮佛時。",
    "T47n1984_001:0492c15_3": "須想一切諸佛是我慈父。",
    "T47n1984_001:0492c15_4": "能令我生諸佛淨土故)一心敬禮。",
    "T47n1984_001:0492c16_5": "本師釋迦牟尼佛(唱竟一禮。",
    "T47n1984_001:0492c16_6": "想云。",
    "T47n1984_001:0492c16_7": "能禮所禮性空寂。",
    "T47n1984_001:0492c16_8": "感應道交難思議。",
    "T47n1984_001:0492c17_9": "我此道場如帝珠。",
    "T47n1984_001:0492c17_10": "釋迦如來影現中。",
    "T47n1984_001:0492c17_11": "我身影現釋迦前。",
    "T47n1984_001:0492c17_12": "頭面接足歸命禮。",
    "T47n1984_001:0492c17_13": "下去同用)。",
    "T47n1984_001:0492c18_0": "一心敬禮。",
    "T47n1984_001:0492c18_1": "過去久遠劫中。",
    "T47n1984_001:0492c18_2": "定光佛光遠佛龍音佛等五十三佛(五十三佛如禮請中說。",
    "T47n1984_001:0492c19_3": "當想此身如幻如化。",
    "T47n1984_001:0492c19_4": "自見對彼佛前作禮。",
    "T47n1984_001:0492c19_5": "偈同上。",
    "T47n1984_001:0492c20_6": "但改云五十三佛影現中。",
    "T47n1984_001:0492c20_7": "我身影現諸佛前。",
    "T47n1984_001:0492c20_8": "下去倣此)。",
    "T47n1984_001:0492c21_0": "一心敬禮。",
    "T47n1984_001:0492c21_1": "過去久滅世自在王佛(法藏本師應知)。",
    "T47n1984_001:0492c22_0": "一心敬禮。",
    "T47n1984_001:0492c22_1": "東方不動佛等。",
    "T47n1984_001:0492c22_2": "盡東方河沙淨土一切諸佛(此下十方佛皆出廣長舌相。",
    "T47n1984_001:0492c23_3": "稱讚極樂。",
    "T47n1984_001:0492c23_4": "當想此身對河沙淨土佛前)。",
    "T47n1984_001:0492c24_0": "一心敬禮。",
    "T47n1984_001:0492c24_1": "東南方最上廣大雲雷音王佛等。",
    "T47n1984_001:0492c25_0": "盡東南方河沙淨土一切諸佛。",
    "T47n1984_001:0492c26_0": "一心敬禮。",
    "T47n1984_001:0492c26_1": "南方日月光佛等。",
    "T47n1984_001:0492c26_2": "盡南方河沙淨土一切諸佛。",
    "T47n1984_001:0492c28_0": "一心敬禮。",
    "T47n1984_001:0492c28_1": "西南方最上日光名稱功德佛等。",
    "T47n1984_001:0493a01_0": "盡西南方河沙淨土一切諸佛。",
    "T47n1984_001:0493a02_0": "一心敬禮。",
    "T47n1984_001:0493a02_1": "西方放光佛等。",
    "T47n1984_001:0493a02_2": "盡西方河沙淨土一切諸佛。",
    "T47n1984_001:0493a04_0": "一心敬禮。",
    "T47n1984_001:0493a04_1": "西北方無量功德火王光明佛等。",
    "T47n1984_001:0493a05_0": "盡西北方河沙淨土一切諸佛。",
    "T47n1984_001:0493a06_0": "一心敬禮。",
    "T47n1984_001:0493a06_1": "北方無量光嚴通達覺慧佛等盡。",
    "T47n1984_001:0493a07_0": "北方河沙淨土一切諸佛。",
    "T47n1984_001:0493a08_0": "一心敬禮。",
    "T47n1984_001:0493a08_1": "東北方無數百千俱胝廣慧佛等。",
    "T47n1984_001:0493a09_0": "盡東北方河沙淨土一切諸佛。",
    "T47n1984_001:0493a10_0": "一心敬禮。",
    "T47n1984_001:0493a10_1": "上方梵音佛等。",
    "T47n1984_001:0493a10_2": "盡上方河沙淨土一切諸佛。",
    "T47n1984_001:0493a12_0": "一心敬禮。",
    "T47n1984_001:0493a12_1": "下方示現一切妙法正理常放火王勝德光明佛等。",
    "T47n1984_001:0493a13_2": "下方河沙淨土一切諸佛。",
    "T47n1984_001:0493a14_0": "一心敬禮。",
    "T47n1984_001:0493a14_1": "往古來今三世諸佛。",
    "T47n1984_001:0493a14_2": "七佛世尊。",
    "T47n1984_001:0493a14_3": "賢劫千佛。",
    "T47n1984_001:0493a16_0": "一心敬禮。",
    "T47n1984_001:0493a16_1": "極樂世界阿彌陀佛(應三禮。",
    "T47n1984_001:0493a16_2": "但改偈云。",
    "T47n1984_001:0493a16_3": "為求往生接足禮)。",
    "T47n1984_001:0493a17_0": "一心敬禮。",
    "T47n1984_001:0493a17_1": "極樂世界佛菩薩等所說經法。",
    "T47n1984_001:0493a17_2": "乃至水鳥樂樹一切法音清淨法藏(想彼淨土法寶顯現道場。",
    "T47n1984_001:0493a18_3": "偈云。",
    "T47n1984_001:0493a19_4": "真空法性如虛空。",
    "T47n1984_001:0493a19_5": "常住法寶難思議。",
    "T47n1984_001:0493a19_6": "我身影現法寶前。",
    "T47n1984_001:0493a19_7": "一一皆悉歸命禮)。",
    "T47n1984_001:0493a20_0": "一心敬禮。",
    "T47n1984_001:0493a20_1": "大乘四十八願無量壽經稱讚經等。",
    "T47n1984_001:0493a21_2": "十方一切尊經十二部真淨法藏(此土法寶。",
    "T47n1984_001:0493a21_3": "偈如前)。",
    "T47n1984_001:0493a22_0": "一心敬禮。",
    "T47n1984_001:0493a22_1": "極樂世界觀世音菩薩摩訶薩(想此菩薩侍彌陀左邊。",
    "T47n1984_001:0493a23_2": "坐蓮華座。",
    "T47n1984_001:0493a23_3": "偈同禮佛。",
    "T47n1984_001:0493a23_4": "但改菩薩為異)。",
    "T47n1984_001:0493a24_0": "一心敬禮。",
    "T47n1984_001:0493a24_1": "極樂世界大勢至菩薩摩訶薩(想侍佛右邊。",
    "T47n1984_001:0493a25_2": "如觀音不異)。",
    "T47n1984_001:0493a26_0": "一心敬禮。",
    "T47n1984_001:0493a26_1": "過去阿僧祇劫法藏比丘菩薩摩訶薩。",
    "T47n1984_001:0493a28_0": "一心敬禮。",
    "T47n1984_001:0493a28_1": "極樂世界一生補處諸大菩薩摩訶薩。",
    "T47n1984_001:0493b01_0": "一心敬禮。",
    "T47n1984_001:0493b01_1": "極樂世界無生不退諸大菩薩摩訶薩。",
    "T47n1984_001:0493b03_0": "一心敬禮。",
    "T47n1984_001:0493b03_1": "極樂世界新發道意菩薩。",
    "T47n1984_001:0493b03_2": "及十方來生淨土一切菩薩摩訶薩。",
    "T47n1984_001:0493b05_0": "一心敬禮。",
    "T47n1984_001:0493b05_1": "文殊師利菩薩。",
    "T47n1984_001:0493b05_2": "普賢菩薩。",
    "T47n1984_001:0493b05_3": "彌勒菩薩。",
    "T47n1984_001:0493b06_4": "常精進菩薩等。",
    "T47n1984_001:0493b06_5": "盡十方一切諸大菩薩摩訶薩。",
    "T47n1984_001:0493b08_0": "一心敬禮。",
    "T47n1984_001:0493b08_1": "大智舍利弗。",
    "T47n1984_001:0493b08_2": "阿難持法者。",
    "T47n1984_001:0493b08_3": "諸大聲聞緣覺。",
    "T47n1984_001:0493b09_4": "一切得道賢聖僧。",
    "T47n1984_001:0493b10_0": "第八懺願法(總有五法。",
    "T47n1984_001:0493b10_1": "今舉初後。",
    "T47n1984_001:0493b10_2": "故云懺願)一明懺悔法(悔有事理。",
    "T47n1984_001:0493b11_3": "應須並運。",
    "T47n1984_001:0493b11_4": "事則竭其三業。",
    "T47n1984_001:0493b11_5": "不惜身命流血雨淚。",
    "T47n1984_001:0493b11_6": "披露罪根不敢覆諱。",
    "T47n1984_001:0493b11_7": "理則觀罪實相。",
    "T47n1984_001:0493b12_8": "能懺所懺皆悉寂滅。",
    "T47n1984_001:0493b12_9": "如餘文廣說。",
    "T47n1984_001:0493b12_10": "知事理已。",
    "T47n1984_001:0493b12_11": "當須等心普為一切懺悔。",
    "T47n1984_001:0493b12_12": "想云我及眾生。",
    "T47n1984_001:0493b12_13": "無始常為三業六根重罪所障。",
    "T47n1984_001:0493b13_14": "不見諸佛不知出要。",
    "T47n1984_001:0493b13_15": "但順生死不知妙理。",
    "T47n1984_001:0493b13_16": "我今雖知。",
    "T47n1984_001:0493b13_17": "猶與一切眾生同為一切重罪所障。",
    "T47n1984_001:0493b13_18": "今對彌陀十方佛前。",
    "T47n1984_001:0493b14_19": "普為眾生歸命懺悔。",
    "T47n1984_001:0493b14_20": "唯願加護令障消滅。",
    "T47n1984_001:0493b14_21": "想已唱云)普為法界一切眾生。",
    "T47n1984_001:0493b15_22": "悉願斷除三障。",
    "T47n1984_001:0493b15_23": "至誠懺悔(唱已一禮。",
    "T47n1984_001:0493b16_24": "各執香爐。",
    "T47n1984_001:0493b16_25": "先運逆順十心。",
    "T47n1984_001:0493b16_26": "始則背真逐妄。",
    "T47n1984_001:0493b16_27": "名順十心。",
    "T47n1984_001:0493b16_28": "今則背妄向真。",
    "T47n1984_001:0493b16_29": "名逆十心。",
    "T47n1984_001:0493b16_30": "有事有理應細思之。",
    "T47n1984_001:0493b17_31": "從初至撥無因果是順。",
    "T47n1984_001:0493b17_32": "故於今日深信。",
    "T47n1984_001:0493b17_33": "下去是逆。",
    "T47n1984_001:0493b17_34": "至正陳懺悔時。",
    "T47n1984_001:0493b17_35": "亦須扶此逆順之意。",
    "T47n1984_001:0493b17_36": "想云。",
    "T47n1984_001:0493b17_37": "我與眾生無始來。",
    "T47n1984_001:0493b18_38": "今由愛見故內計我人一。",
    "T47n1984_001:0493b18_39": "外加惡友二。",
    "T47n1984_001:0493b18_40": "不隨喜他一毫之善三。",
    "T47n1984_001:0493b18_41": "唯遍三業廣造眾罪四。",
    "T47n1984_001:0493b18_42": "事雖不廣惡心遍布五。",
    "T47n1984_001:0493b19_43": "晝夜相續無有間斷六。",
    "T47n1984_001:0493b19_44": "覆諱過失不欲人知七。",
    "T47n1984_001:0493b19_45": "不畏惡道八。",
    "T47n1984_001:0493b19_46": "無慚無愧九。",
    "T47n1984_001:0493b19_47": "撥無因果十。",
    "T47n1984_001:0493b19_48": "故於今日深信因果一。",
    "T47n1984_001:0493b20_49": "生重慚愧二。",
    "T47n1984_001:0493b20_50": "生大怖畏三。",
    "T47n1984_001:0493b20_51": "發露懺悔四。",
    "T47n1984_001:0493b20_52": "斷相續心發菩提心斷惡修善六。",
    "T47n1984_001:0493b20_53": "勤策三業翻昔重過七。",
    "T47n1984_001:0493b20_54": "隨喜凡聖一毫之善八。",
    "T47n1984_001:0493b21_55": "念十方佛有大福慧。",
    "T47n1984_001:0493b21_56": "能救拔我及諸眾生從二死海置三德岸九。",
    "T47n1984_001:0493b21_57": "從無始來不知諸法本性空寂。",
    "T47n1984_001:0493b21_58": "廣造眾惡。",
    "T47n1984_001:0493b22_59": "今知空寂。",
    "T47n1984_001:0493b22_60": "為求菩提。",
    "T47n1984_001:0493b22_61": "為眾生故。",
    "T47n1984_001:0493b22_62": "廣修諸善遍斷眾惡十。",
    "T47n1984_001:0493b22_63": "唯願十方諸佛。",
    "T47n1984_001:0493b22_64": "彌陀世尊。",
    "T47n1984_001:0493b22_65": "慈悲攝受聽我懺悔)。",
    "T47n1984_001:0493b23_0": "我比丘(某甲)至心懺悔。",
    "T47n1984_001:0493b23_1": "十方諸佛。",
    "T47n1984_001:0493b23_2": "真實見知。",
    "T47n1984_001:0493b24_0": "我及眾生。",
    "T47n1984_001:0493b24_1": "本性清淨諸佛住處。",
    "T47n1984_001:0493b24_2": "名常寂光遍在剎那。",
    "T47n1984_001:0493b25_3": "及一切法。",
    "T47n1984_001:0493b25_4": "而我不了。",
    "T47n1984_001:0493b25_5": "妄計我人。",
    "T47n1984_001:0493b25_6": "於平等法中。",
    "T47n1984_001:0493b26_7": "而起分別。",
    "T47n1984_001:0493b26_8": "於清淨心中。",
    "T47n1984_001:0493b26_9": "而生染著。",
    "T47n1984_001:0493b26_10": "以是顛倒。",
    "T47n1984_001:0493b27_11": "五欲因緣。",
    "T47n1984_001:0493b27_12": "生死循環。",
    "T47n1984_001:0493b27_13": "經歷三界。",
    "T47n1984_001:0493b27_14": "坐此相續。",
    "T47n1984_001:0493c01_15": "不念出期。",
    "T47n1984_001:0493c01_16": "而復於中。",
    "T47n1984_001:0493c01_17": "造極惡業。",
    "T47n1984_001:0493c01_18": "四重五逆。",
    "T47n1984_001:0493c02_19": "及一闡提。",
    "T47n1984_001:0493c02_20": "非毀大乘。",
    "T47n1984_001:0493c02_21": "謗破三寶。",
    "T47n1984_001:0493c02_22": "謗無諸佛。",
    "T47n1984_001:0493c03_23": "斷學般若。",
    "T47n1984_001:0493c03_24": "用十方僧物。",
    "T47n1984_001:0493c03_25": "用佛塔物。",
    "T47n1984_001:0493c03_26": "污梵行人。",
    "T47n1984_001:0493c04_27": "習近惡法。",
    "T47n1984_001:0493c04_28": "於破戒者。",
    "T47n1984_001:0493c04_29": "更相讚護。",
    "T47n1984_001:0493c04_30": "三乘道人。",
    "T47n1984_001:0493c05_31": "種種毀罵。",
    "T47n1984_001:0493c05_32": "內覆過失。",
    "T47n1984_001:0493c05_33": "外現威儀。",
    "T47n1984_001:0493c05_34": "常以五邪。",
    "T47n1984_001:0493c06_35": "招納四事。",
    "T47n1984_001:0493c06_36": "不淨說法。",
    "T47n1984_001:0493c06_37": "非律教人。",
    "T47n1984_001:0493c06_38": "因佛出家。",
    "T47n1984_001:0493c07_39": "反破佛法。",
    "T47n1984_001:0493c07_40": "違逆師長。",
    "T47n1984_001:0493c07_41": "如法教誨。",
    "T47n1984_001:0493c07_42": "恣行貪恚。",
    "T47n1984_001:0493c08_43": "無慚恥心。",
    "T47n1984_001:0493c08_44": "以是因緣。",
    "T47n1984_001:0493c08_45": "諸惡業力。",
    "T47n1984_001:0493c08_46": "命終當墮阿鼻地獄。",
    "T47n1984_001:0493c09_47": "猛火熾然。",
    "T47n1984_001:0493c09_48": "受無量苦。",
    "T47n1984_001:0493c09_49": "千萬億劫。",
    "T47n1984_001:0493c10_50": "無解脫期。",
    "T47n1984_001:0493c10_51": "今始覺知。",
    "T47n1984_001:0493c10_52": "生大慚愧。",
    "T47n1984_001:0493c10_53": "生大怖畏。",
    "T47n1984_001:0493c11_54": "十方世尊。",
    "T47n1984_001:0493c11_55": "阿彌陀佛。",
    "T47n1984_001:0493c11_56": "久已於我。",
    "T47n1984_001:0493c11_57": "生大悲心。",
    "T47n1984_001:0493c12_58": "無數劫來。",
    "T47n1984_001:0493c12_59": "為度我故。",
    "T47n1984_001:0493c12_60": "修菩提道。",
    "T47n1984_001:0493c12_61": "不惜身命。",
    "T47n1984_001:0493c13_62": "今已得佛。",
    "T47n1984_001:0493c13_63": "大悲滿足。",
    "T47n1984_001:0493c13_64": "真實能為一切救護。",
    "T47n1984_001:0493c14_65": "我今造惡。",
    "T47n1984_001:0493c14_66": "必墮三塗。",
    "T47n1984_001:0493c14_67": "願起哀憐。",
    "T47n1984_001:0493c14_68": "受我懺悔。",
    "T47n1984_001:0493c15_69": "重罪得滅。",
    "T47n1984_001:0493c15_70": "諸惡消除。",
    "T47n1984_001:0493c15_71": "乃至娑婆生因永盡。",
    "T47n1984_001:0493c16_72": "諸佛淨土。",
    "T47n1984_001:0493c16_73": "如願往生。",
    "T47n1984_001:0493c16_74": "當命終時。",
    "T47n1984_001:0493c16_75": "悉無障疑(懺悔已。",
    "T47n1984_001:0493c17_76": "歸命禮阿彌陀佛。",
    "T47n1984_001:0493c17_77": "及一切三寶。",
    "T47n1984_001:0493c17_78": "禮已以頭三叩於地。",
    "T47n1984_001:0493c17_79": "表三處作禮。",
    "T47n1984_001:0493c17_80": "一謂彌陀世尊。",
    "T47n1984_001:0493c17_81": "二淨土三寶。",
    "T47n1984_001:0493c18_0": "三十方三寶。",
    "T47n1984_001:0493c18_1": "應三說懺悔等文。",
    "T47n1984_001:0493c18_2": "自看時早晚。",
    "T47n1984_001:0493c18_3": "若時促略云。",
    "T47n1984_001:0493c18_4": "第二第三亦如是說。",
    "T47n1984_001:0493c18_5": "下四悔準此)。",
    "T47n1984_001:0493c19_0": "二明勸請法(想對十方一切佛前。",
    "T47n1984_001:0493c19_1": "長跪勸請。",
    "T47n1984_001:0493c19_2": "請有二義。",
    "T47n1984_001:0493c19_3": "一從初至轉於無上妙法輪。",
    "T47n1984_001:0493c19_4": "名請說法。",
    "T47n1984_001:0493c20_5": "二諸佛下請久住世。",
    "T47n1984_001:0493c20_6": "意亦在說法。",
    "T47n1984_001:0493c20_7": "十方諸佛以道眼力。",
    "T47n1984_001:0493c20_8": "知我勸請。",
    "T47n1984_001:0493c20_9": "唯願久住轉正法輪。",
    "T47n1984_001:0493c20_10": "所在生處常能勸請)我比丘(某甲)至心勸請。",
    "T47n1984_001:0493c21_11": "十方所有世間燈。",
    "T47n1984_001:0493c21_12": "最初成就菩提者。",
    "T47n1984_001:0493c22_13": "我今一切皆勸請。",
    "T47n1984_001:0493c22_14": "轉於無上妙法輪。",
    "T47n1984_001:0493c23_15": "諸佛若欲示涅槃。",
    "T47n1984_001:0493c23_16": "我悉至誠而勸請。",
    "T47n1984_001:0493c23_17": "唯願久住剎塵劫。",
    "T47n1984_001:0493c24_18": "利樂一切諸眾生(勸請已。",
    "T47n1984_001:0493c24_19": "歸命禮阿彌陀佛。",
    "T47n1984_001:0493c25_0": "及一切三寶)。",
    "T47n1984_001:0493c26_0": "三明隨喜法(十方凡聖一毫之善。",
    "T47n1984_001:0493c26_1": "我亦隨喜。",
    "T47n1984_001:0493c26_2": "善根福德能令見者生喜。",
    "T47n1984_001:0493c26_3": "我隨彼喜)我比丘(某甲)至心隨喜。",
    "T47n1984_001:0493c27_4": "十方一切諸眾生。",
    "T47n1984_001:0493c27_5": "二乘有學及無學。",
    "T47n1984_001:0493c28_6": "一切如來與菩薩。",
    "T47n1984_001:0493c28_7": "所有功德皆隨喜(隨喜已。",
    "T47n1984_001:0494a01_8": "歸命禮阿彌陀佛。",
    "T47n1984_001:0494a01_9": "及一切三寶)。",
    "T47n1984_001:0494a02_0": "四明迴向法(無始時來。",
    "T47n1984_001:0494a02_1": "乃至今日一毫之善。",
    "T47n1984_001:0494a02_2": "迴向三有。",
    "T47n1984_001:0494a02_3": "故今悔之誓求菩提)我比丘(某甲)至心迴向。",
    "T47n1984_001:0494a03_4": "所有禮讚供養福請佛住世轉法輪。",
    "T47n1984_001:0494a04_5": "隨喜懺悔諸善根。",
    "T47n1984_001:0494a04_6": "迴向眾生及佛道(迴向已。",
    "T47n1984_001:0494a05_7": "歸命禮阿彌陀佛。",
    "T47n1984_001:0494a05_8": "及一切三寶)。",
    "T47n1984_001:0494a06_0": "五明發願法(大體須存滅罪除障。",
    "T47n1984_001:0494a06_1": "扶四弘誓。",
    "T47n1984_001:0494a06_2": "隨順菩提。",
    "T47n1984_001:0494a06_3": "求生淨土。",
    "T47n1984_001:0494a06_4": "唱時想的對彌陀。",
    "T47n1984_001:0494a06_5": "餘佛菩薩悉為證明)我比丘(某甲)至心發願。",
    "T47n1984_001:0494a08_6": "願共修淨行人。",
    "T47n1984_001:0494a08_7": "三業所生一切諸善。",
    "T47n1984_001:0494a09_8": "莊嚴淨願。",
    "T47n1984_001:0494a09_9": "福智現前。",
    "T47n1984_001:0494a09_10": "願得彌陀世尊。",
    "T47n1984_001:0494a10_11": "觀音勢至。",
    "T47n1984_001:0494a10_12": "慈悲攝受。",
    "T47n1984_001:0494a10_13": "為我現身。",
    "T47n1984_001:0494a10_14": "放淨光明。",
    "T47n1984_001:0494a11_15": "照觸我等。",
    "T47n1984_001:0494a11_16": "諸根寂靜。",
    "T47n1984_001:0494a11_17": "三障消除。",
    "T47n1984_001:0494a11_18": "樂修淨行。",
    "T47n1984_001:0494a12_19": "身心潤澤。",
    "T47n1984_001:0494a12_20": "念念不失。",
    "T47n1984_001:0494a12_21": "淨土善根。",
    "T47n1984_001:0494a12_22": "及於夢中。",
    "T47n1984_001:0494a13_23": "常見彼國。",
    "T47n1984_001:0494a13_24": "眾妙莊嚴。",
    "T47n1984_001:0494a13_25": "慰悅我心。",
    "T47n1984_001:0494a13_26": "令生精進。",
    "T47n1984_001:0494a14_27": "願得臨命終時。",
    "T47n1984_001:0494a14_28": "預知將至。",
    "T47n1984_001:0494a14_29": "盡除障礙。",
    "T47n1984_001:0494a14_30": "慧念增明。",
    "T47n1984_001:0494a15_31": "身無病苦。",
    "T47n1984_001:0494a15_32": "心不顛倒。",
    "T47n1984_001:0494a15_33": "面奉彌陀。",
    "T47n1984_001:0494a15_34": "及諸眷屬。",
    "T47n1984_001:0494a16_35": "歎喜快樂。",
    "T47n1984_001:0494a16_36": "於一剎那。",
    "T47n1984_001:0494a16_37": "即得往生。",
    "T47n1984_001:0494a16_38": "極樂世界。",
    "T47n1984_001:0494a17_39": "到已自見生蓮華中。",
    "T47n1984_001:0494a17_40": "蒙佛授記。",
    "T47n1984_001:0494a17_41": "得授記已。",
    "T47n1984_001:0494a18_0": "自在化身。",
    "T47n1984_001:0494a18_1": "微塵佛剎。",
    "T47n1984_001:0494a18_2": "隨順眾生。",
    "T47n1984_001:0494a18_3": "而為利益。",
    "T47n1984_001:0494a18_4": "能令佛剎塵數眾生。",
    "T47n1984_001:0494a19_5": "發菩提心。",
    "T47n1984_001:0494a19_6": "俱時離苦。",
    "T47n1984_001:0494a19_7": "皆共往生。",
    "T47n1984_001:0494a20_8": "阿彌陀佛。",
    "T47n1984_001:0494a20_9": "極樂世界。",
    "T47n1984_001:0494a20_10": "如是行願。",
    "T47n1984_001:0494a20_11": "念念現前。",
    "T47n1984_001:0494a21_12": "盡未來時。",
    "T47n1984_001:0494a21_13": "相續不斷。",
    "T47n1984_001:0494a21_14": "身語意業。",
    "T47n1984_001:0494a21_15": "常作佛事(發願已。",
    "T47n1984_001:0494a22_16": "歸命禮阿彌陀佛。",
    "T47n1984_001:0494a22_17": "及一切三寶。",
    "T47n1984_001:0494a22_18": "發願往生正行。",
    "T47n1984_001:0494a22_19": "須具足三說。",
    "T47n1984_001:0494a22_20": "不同前四悔。",
    "T47n1984_001:0494a22_21": "隨時廣略應知)。",
    "T47n1984_001:0494a23_0": "第九旋遶誦經法(禮竟。",
    "T47n1984_001:0494a23_1": "當起各整衣服。",
    "T47n1984_001:0494a23_2": "定立少願當想三寶賢聖畟塞道場。",
    "T47n1984_001:0494a23_3": "各坐法坐見身。",
    "T47n1984_001:0494a24_4": "一一遶旋法座。",
    "T47n1984_001:0494a24_5": "安詳而轉。",
    "T47n1984_001:0494a24_6": "然後口稱念云)南無佛　南無法　南無僧　南無釋迦牟尼佛　南無世自在王佛　南無阿彌陀佛　南無觀世音菩薩　南無大勢至菩薩　南無文殊師利菩薩　南無普賢菩薩　南無清淨大海眾菩薩摩訶薩(如是三稱當誦阿彌陀經。",
    "T47n1984_001:0494b01_7": "或十六觀經。",
    "T47n1984_001:0494b01_8": "誦畢復三稱前名號。",
    "T47n1984_001:0494b01_9": "當稱誦時。",
    "T47n1984_001:0494b02_0": "聲名句文空無所得。",
    "T47n1984_001:0494b02_1": "猶空鳥跡。",
    "T47n1984_001:0494b02_2": "豈可取著。",
    "T47n1984_001:0494b02_3": "身語意三。",
    "T47n1984_001:0494b02_4": "如影響焰。",
    "T47n1984_001:0494b02_5": "雖皆不實感應其在。",
    "T47n1984_001:0494b02_6": "自見其身各旋法座。",
    "T47n1984_001:0494b02_7": "或多或少。",
    "T47n1984_001:0494b03_8": "經畢為斯旋已。",
    "T47n1984_001:0494b03_9": "唱云)自歸於佛。",
    "T47n1984_001:0494b04_10": "當願眾生。",
    "T47n1984_001:0494b04_11": "體解大道。",
    "T47n1984_001:0494b04_12": "發無上心(一拜)。",
    "T47n1984_001:0494b05_0": "自歸於法。",
    "T47n1984_001:0494b05_1": "當願眾生。",
    "T47n1984_001:0494b05_2": "深入經藏。",
    "T47n1984_001:0494b05_3": "智慧如海(一拜)。",
    "T47n1984_001:0494b06_0": "自歸於僧。",
    "T47n1984_001:0494b06_1": "當願眾生。",
    "T47n1984_001:0494b06_2": "統理大眾。",
    "T47n1984_001:0494b06_3": "一切無礙。",
    "T47n1984_001:0494b07_0": "和南聖眾(一拜。",
    "T47n1984_001:0494b07_1": "首者跪唱云)。",
    "T47n1984_001:0494b08_0": "白眾等聽說。",
    "T47n1984_001:0494b08_1": "經中如來偈。",
    "T47n1984_001:0494b08_2": "何不力為善。",
    "T47n1984_001:0494b08_3": "念道之自然。",
    "T47n1984_001:0494b09_4": "宜各勤精進。",
    "T47n1984_001:0494b09_5": "努力自求之。",
    "T47n1984_001:0494b09_6": "必得超絕去。",
    "T47n1984_001:0494b10_7": "往生安養國。",
    "T47n1984_001:0494b10_8": "橫截五惡道。",
    "T47n1984_001:0494b10_9": "惡趣自然閉。",
    "T47n1984_001:0494b10_10": "升道無窮極。",
    "T47n1984_001:0494b11_11": "易往而無人。",
    "T47n1984_001:0494b11_12": "何不棄世事。",
    "T47n1984_001:0494b11_13": "勤行求道德。",
    "T47n1984_001:0494b12_14": "各得及長生。",
    "T47n1984_001:0494b12_15": "壽樂無窮極。",
    "T47n1984_001:0494b13_0": "第十坐禪法",
    "T47n1984_001:0494b14_0": "如上事畢。",
    "T47n1984_001:0494b14_1": "當於一處繩床西向。",
    "T47n1984_001:0494b14_2": "易觀想故。",
    "T47n1984_001:0494b14_3": "表正向故。",
    "T47n1984_001:0494b15_4": "跏趺端坐。",
    "T47n1984_001:0494b15_5": "項脊相對不昂。",
    "T47n1984_001:0494b15_6": "不傴。",
    "T47n1984_001:0494b15_7": "調和氣息定住其心。",
    "T47n1984_001:0494b16_8": "然所修觀門。",
    "T47n1984_001:0494b16_9": "經論甚多。",
    "T47n1984_001:0494b16_10": "初心凡夫那曾遍習。",
    "T47n1984_001:0494b17_11": "今從要易想略示二種。",
    "T47n1984_001:0494b17_12": "於二種中仍逐所宜。",
    "T47n1984_001:0494b18_13": "未必併用。",
    "T47n1984_001:0494b18_14": "其有於餘觀想。",
    "T47n1984_001:0494b18_15": "熟者任便。",
    "T47n1984_001:0494b19_16": "但得不離淨土法門皆應修習。",
    "T47n1984_001:0494b19_17": "所言二種。",
    "T47n1984_001:0494b20_18": "一者扶普觀意。",
    "T47n1984_001:0494b20_19": "坐已自想即時所修計功合生極樂世界。",
    "T47n1984_001:0494b21_20": "當便起心生於彼想於蓮華中結跏趺坐。",
    "T47n1984_001:0494b22_21": "作蓮華合想。",
    "T47n1984_001:0494b22_22": "作華開想。",
    "T47n1984_001:0494b22_23": "當華開時有五百色光來照身想。",
    "T47n1984_001:0494b23_24": "作眼目開想。",
    "T47n1984_001:0494b23_25": "見佛菩薩及國土想。",
    "T47n1984_001:0494b24_26": "即於佛前坐聽妙法。",
    "T47n1984_001:0494b24_27": "及聞一切音聲。",
    "T47n1984_001:0494b25_28": "皆說所樂聞法。",
    "T47n1984_001:0494b25_29": "所聞要與十二部經合。",
    "T47n1984_001:0494b26_30": "作此想時。",
    "T47n1984_001:0494b26_31": "大須堅固令心不散。",
    "T47n1984_001:0494b26_32": "心想明了如眼所見。",
    "T47n1984_001:0494b27_33": "經久乃起。",
    "T47n1984_001:0494b27_34": "二者直想阿彌陀佛。",
    "T47n1984_001:0494b28_0": "丈六金軀坐於華上。",
    "T47n1984_001:0494b28_1": "專繫眉間白毫一相。",
    "T47n1984_001:0494b28_2": "其毫長一丈五尺。",
    "T47n1984_001:0494b29_3": "周圍五寸外有八稜。",
    "T47n1984_001:0494b29_4": "其毫中空右旋宛轉在眉中間。",
    "T47n1984_001:0494c01_5": "瑩淨明徹不可具說。",
    "T47n1984_001:0494c02_0": "顯映金顏分齊分明。",
    "T47n1984_001:0494c02_1": "作此想時。",
    "T47n1984_001:0494c02_2": "停心注想堅固勿移。",
    "T47n1984_001:0494c03_3": "然復應觀想念所見。",
    "T47n1984_001:0494c03_4": "若成未成皆想念。",
    "T47n1984_001:0494c04_5": "因緣無實性相所有皆空。",
    "T47n1984_001:0494c04_6": "一如鏡中面像。",
    "T47n1984_001:0494c05_0": "如水現月影。",
    "T47n1984_001:0494c05_1": "如夢如幻。",
    "T47n1984_001:0494c05_2": "雖空而亦可見。",
    "T47n1984_001:0494c05_3": "二皆心性所現所有者。",
    "T47n1984_001:0494c06_4": "即是自心。",
    "T47n1984_001:0494c06_5": "心不自知心。",
    "T47n1984_001:0494c06_6": "心不自見心。",
    "T47n1984_001:0494c07_7": "心有想即癡。",
    "T47n1984_001:0494c07_8": "無想即泥洹。",
    "T47n1984_001:0494c07_9": "心有心無皆名有想。",
    "T47n1984_001:0494c08_10": "盡名為癡。",
    "T47n1984_001:0494c08_11": "不見法性。",
    "T47n1984_001:0494c08_12": "三因緣生法即空假中。",
    "T47n1984_001:0494c09_13": "不一不異非縱非橫。",
    "T47n1984_001:0494c09_14": "不可思議心想寂靜。",
    "T47n1984_001:0494c10_15": "則能成就念佛三昧。",
    "T47n1984_001:0494c10_16": "久而乃起(廣如別說)問念佛三昧久習方成。",
    "T47n1984_001:0494c11_17": "十日七日修懺之者。",
    "T47n1984_001:0494c12_0": "云何卒學。",
    "T47n1984_001:0494c12_1": "答緣有生熟。",
    "T47n1984_001:0494c12_2": "習有久近。",
    "T47n1984_001:0494c12_3": "若過去曾習。",
    "T47n1984_001:0494c13_4": "及今生預修。",
    "T47n1984_001:0494c13_5": "至行懺時薄修即得。",
    "T47n1984_001:0494c13_6": "若宿未經懷。",
    "T47n1984_001:0494c14_7": "近懺方學。",
    "T47n1984_001:0494c14_8": "此必難成。",
    "T47n1984_001:0494c14_9": "然雖不成。",
    "T47n1984_001:0494c14_10": "亦須依此繫心為坐禪。",
    "T47n1984_001:0494c15_11": "觀境經云。",
    "T47n1984_001:0494c15_12": "若成不成。",
    "T47n1984_001:0494c15_13": "皆滅無量生死之罪生諸佛前。",
    "T47n1984_001:0494c16_14": "又云。",
    "T47n1984_001:0494c16_15": "但聞白毫名字滅無量罪。",
    "T47n1984_001:0494c17_16": "何況繫念。",
    "T47n1984_001:0494c17_17": "凡欲修者。",
    "T47n1984_001:0494c17_18": "勿生疑怖自謂無分。",
    "T47n1984_001:0494c18_19": "彼佛有宿願力。",
    "T47n1984_001:0494c18_20": "令修此三昧者皆得成就般舟。",
    "T47n1984_001:0494c19_21": "依三力成就。",
    "T47n1984_001:0494c19_22": "一佛威力。",
    "T47n1984_001:0494c19_23": "二三昧力。",
    "T47n1984_001:0494c20_0": "三己功德力。",
    "T47n1984_001:0494c20_1": "觀經但聞無量壽佛二菩薩名。",
    "T47n1984_001:0494c21_0": "能滅無量生死之罪。",
    "T47n1984_001:0494c21_1": "況憶念者乎。",
    "T47n1984_001:0494c21_2": "若有樂修餘觀。",
    "T47n1984_001:0494c22_3": "當自隨情。",
    "T47n1984_001:0494c22_4": "坐已即起隨意佛事。",
    "T47n1984_001:0494c22_5": "或要修觀更坐無妨。",
    "T47n1984_001:0494c23_6": "若不慣習坐。",
    "T47n1984_001:0494c23_7": "乃行道稱念亦得。",
    "T47n1984_001:0494c24_0": "於夜夢中見彌陀佛。",
    "T47n1984_001:0494c24_1": "具如經說。",
    "T47n1984_001:0494c25_0": "往生淨土懺願儀"
}