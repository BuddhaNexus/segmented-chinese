[
    {
        "source_sentence": "6大般涅槃經集解卷第五十",
        "from": "T37n1763_050:0528b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　辨四量心",
        "from": "T37n1763_050:0528b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　廣辯十事滅除有餘斷除業緣",
        "from": "T37n1763_050:0528b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　辯戒有五種心下中上上上上中上　辯百福德成三十二相之一相及八十種好　辯涅槃經能令眾生離二十五有　廣辨金剛三昧德王品之第六復次善男子！",
        "from": "T37n1763_050:0528b14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩至成就具足第三功德。",
        "from": "T37n1763_050:0528b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0528b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三，四等行功德也。",
        "from": "T37n1763_050:0528b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨慈得慈者，世間之慈則緣親與樂也。",
        "from": "T37n1763_050:0528b16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若怨親同等，是則無緣也。",
        "from": "T37n1763_050:0528b17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假慈是世諦，實慈是第一義諦也。",
        "from": "T37n1763_050:0528b18_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可有相緣者是世諦，無相緣是第一義諦也。",
        "from": "T37n1763_050:0528b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0528b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三功德，以慈悲為體。",
        "from": "T37n1763_050:0528b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨世諦慈得第一義慈者，此非空第一義，欲明菩薩得真無相慈現前，不從緣得。",
        "from": "T37n1763_050:0528b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若凡夫行慈，必須見緣則方生；",
        "from": "T37n1763_050:0528b22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩不然，心常懷慈悲，不待緣後方發故。",
        "from": "T37n1763_050:0528b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以捨世諦虛妄之慈，得真實第一無相之慈。",
        "from": "T37n1763_050:0528b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既解慈體竟，下便出三事，就所無來明慈：",
        "from": "T37n1763_050:0528b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一捨闡提等得相之慈；",
        "from": "T37n1763_050:0528b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二捨黃門等嫗弱之慈；",
        "from": "T37n1763_050:0528b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三捨二乘無如理解之意。",
        "from": "T37n1763_050:0528b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既捨此三慈，得真無相如來之慈。",
        "from": "T37n1763_050:0528b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_050:0528b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩摩訶薩至十者斷除二邊。",
        "from": "T37n1763_050:0528b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0528b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具四等成十功德，說行一周也。",
        "from": "T37n1763_050:0528c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0528c01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四功德，以十事為體。",
        "from": "T37n1763_050:0528c01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十事即是喜捨，自身決定是喜相，餘多是捨也。",
        "from": "T37n1763_050:0528c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何根深難可傾拔至修大涅槃根深難拔。",
        "from": "T37n1763_050:0528c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0528c04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不放逸者，總萬行之名也，下十根是其事也。",
        "from": "T37n1763_050:0528c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_050:0528c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不放逸體，即智慧性。",
        "from": "T37n1763_050:0528c05_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂信根者，釋所以難拔也。",
        "from": "T37n1763_050:0528c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0528c06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一云根深難拔者，諸不放逸。",
        "from": "T37n1763_050:0528c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "失不放逸，乃有別心，無有別行。",
        "from": "T37n1763_050:0528c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如精進之流，正背一切惡，不涉五欲，唯修善為德。",
        "from": "T37n1763_050:0528c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此心若立，無行不成。",
        "from": "T37n1763_050:0528c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯佛是極不放逸人，故又言不放逸乃是無上道之根本，眾善皆從之所生。",
        "from": "T37n1763_050:0528c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下去作十二譬來明不放逸行勝也。",
        "from": "T37n1763_050:0528c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何於身作決定想至於自身中生決定想。",
        "from": "T37n1763_050:0528c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0528c14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十根不拔，自知決定成佛也。",
        "from": "T37n1763_050:0528c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0528c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二自身生決定者，從昔教來，學者未體乎大理，見法未分明，不知身為佛因。",
        "from": "T37n1763_050:0528c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於此教識因果性，知神明妙體，生死依如來藏。",
        "from": "T37n1763_050:0528c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有決定修，行因取果，心無移易亦不非時證，唯曠被為德。",
        "from": "T37n1763_050:0528c19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既如此勇決，來果必剋。",
        "from": "T37n1763_050:0528c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0528c19_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三不觀福田者，若如昔教法，必應先選擇福田然後行施，此本是化下愚之辭。",
        "from": "T37n1763_050:0528c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今六行菩薩心既體理，復有異凡夫之念處故，所以不問是田非田，但以捨為德，一切皆施。",
        "from": "T37n1763_050:0528c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若纖毫有存，即成分別。",
        "from": "T37n1763_050:0528c24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若不懷此心，終不會理也。",
        "from": "T37n1763_050:0528c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩不觀福田至不觀福田及非福田。",
        "from": "T37n1763_050:0528c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0528c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心已決定菩提要行唯先度人，不觀田與非田也。",
        "from": "T37n1763_050:0528c27_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何名為淨佛國土至是名菩薩修淨佛土。",
        "from": "T37n1763_050:0528c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0528c29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行慈者，乃未始不益眾生。",
        "from": "T37n1763_050:0528c29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向舉施言因時之益，此修淨土是果時益也。",
        "from": "T37n1763_050:0529a01_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_050:0529a02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中偏出願耳。",
        "from": "T37n1763_050:0529a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如《維摩經》中為化眾生而取佛土也。",
        "from": "T37n1763_050:0529a03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0529a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四修淨佛土者，勸修行十善，除於十惡。",
        "from": "T37n1763_050:0529a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若十善滿，眾惡永盡，功德圓備，至金剛心後無土之土，此為真淨。",
        "from": "T37n1763_050:0529a05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若降此以還，悉於形中辯淨。",
        "from": "T37n1763_050:0529a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今菩薩發願修行此德，為接引下愚，示備善之基漸也。",
        "from": "T37n1763_050:0529a07_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩摩訶薩滅除有餘至摩訶薩滅除有餘。",
        "from": "T37n1763_050:0529a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0529a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以二事合釋者，欲通說餘有也。",
        "from": "T37n1763_050:0529a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者？",
        "from": "T37n1763_050:0529a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩得無緣慈，現不起惡，過去有善惡餘業。",
        "from": "T37n1763_050:0529a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能累行者，根、業重別為二事。",
        "from": "T37n1763_050:0529a11_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有輕不數，雖輕是患。",
        "from": "T37n1763_050:0529a12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通欲釋之，三事并稱餘業。",
        "from": "T37n1763_050:0529a12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名餘有者，是障二果無知也。",
        "from": "T37n1763_050:0529a13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_050:0529a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四果善業豈可滅耶？",
        "from": "T37n1763_050:0529a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以能潤者滅，故所潤乾枯，不能感果，謂之業滅。",
        "from": "T37n1763_050:0529a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘有者，二乘人各證所得無為果也。",
        "from": "T37n1763_050:0529a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無結無業而轉二果者，言無三界結業，而報身猶存，正是有餘涅槃，要捨報身得於無餘。",
        "from": "T37n1763_050:0529a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所言二者，二家同轉，亦言無餘，於前為二也。",
        "from": "T37n1763_050:0529a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依數經，轉鈍作利；",
        "from": "T37n1763_050:0529a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今言如來不復同此菩薩，以經力故能滅也。",
        "from": "T37n1763_050:0529a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0529a20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五曰滅除有餘，第六斷除業緣，今為三章門解此二事：",
        "from": "T37n1763_050:0529a22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一餘報、二餘有。",
        "from": "T37n1763_050:0529a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘報者，此明習性報。",
        "from": "T37n1763_050:0529a22_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如過去多欲，雖出地獄來生人中，亦多欲等也。",
        "from": "T37n1763_050:0529a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘業者，即是人天中受報未盡者是也。",
        "from": "T37n1763_050:0529a24_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘有者，此明三界外習障。",
        "from": "T37n1763_050:0529a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如小乘無知等，轉鈍作利也。",
        "from": "T37n1763_050:0529a26_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩修清淨身至菩薩摩訶薩修於淨身。",
        "from": "T37n1763_050:0529a28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0529a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五種心者，五品心得五品，或至正見亦爾。",
        "from": "T37n1763_050:0529a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名初發心者，具五十心，名壹決定心。",
        "from": "T37n1763_050:0529b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名滿足者，具五十定心，名滿足一福也。",
        "from": "T37n1763_050:0529b01_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_050:0529b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五品心，修十善為十。",
        "from": "T37n1763_050:0529b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若此心成就，復有五十。",
        "from": "T37n1763_050:0529b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以百福凡成三千二百，為三十二相也。",
        "from": "T37n1763_050:0529b04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0529b04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七修清淨身者，初後不殺戒有五種心。",
        "from": "T37n1763_050:0529b05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論萬行不出十善，十善滿足則得成佛。",
        "from": "T37n1763_050:0529b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩初在性地時，持一戒有五品心，若持十戒則成五十心。",
        "from": "T37n1763_050:0529b07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十心滿登初住，又持十戒復成五十。",
        "from": "T37n1763_050:0529b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具有百心，名百福德。",
        "from": "T37n1763_050:0529b08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是十地無漏具足，後時成佛，還來應三十，故有三十二相。",
        "from": "T37n1763_050:0529b10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今言百福成一相者，若就十地有萬福，應言成百相。",
        "from": "T37n1763_050:0529b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故言成三十二解者，意言三十二是一方之所須，若一一相來取盡具萬福。",
        "from": "T37n1763_050:0529b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以復修八十種好者，因世八十人事八十神。",
        "from": "T37n1763_050:0529b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然凡夫得相來久，所事之神欲使各各相異。",
        "from": "T37n1763_050:0529b15_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來今欲化此人等故，一時之中令此人於佛身上各各見其所事之神。",
        "from": "T37n1763_050:0529b16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既見佛身上有己家所事者，便來歸依，受佛之化。",
        "from": "T37n1763_050:0529b17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下從十二日去，盡是列己家所事神之名。",
        "from": "T37n1763_050:0529b18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩了知諸緣至是名菩薩了知諸緣。",
        "from": "T37n1763_050:0529b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0529b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斷煩惱、修菩提、知斷結，緣中解縛，說了諸緣也。",
        "from": "T37n1763_050:0529b21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0529b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八了知諸緣者，正善知境界，於萬法不取相。",
        "from": "T37n1763_050:0529b22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既體因緣以為虛假，即有為不有。",
        "from": "T37n1763_050:0529b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既知有無可有，無亦無可無。",
        "from": "T37n1763_050:0529b23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正體性如此，故稱了知諸緣。",
        "from": "T37n1763_050:0529b24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩離諸怨敵至是名菩薩離諸怨敵。",
        "from": "T37n1763_050:0529b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0529b26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了緣則煩惱盡，是以說之。",
        "from": "T37n1763_050:0529b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謗方等相煩惱非定怨，此說定怨也。",
        "from": "T37n1763_050:0529b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0529b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第九離怨敵者，自不此經中學，終不能得除煩惱之怨敵故。",
        "from": "T37n1763_050:0529b29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五住菩薩除色界結盡，下地麁惑已斷，所餘未治者不名為怨，盡用為道也。",
        "from": "T37n1763_050:0529c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩遠離二邊至具足成就第四功德。",
        "from": "T37n1763_050:0529c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0529c03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因果為二，謂煩惱盡因果滅，得常住也。",
        "from": "T37n1763_050:0529c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0529c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除二邊者，二十五有因果無明愛都盡也。",
        "from": "T37n1763_050:0529c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時光明遍照高貴德王至世界無不莊嚴嚴淨。",
        "from": "T37n1763_050:0529c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0529c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "土有二種，佛行報、有眾生行報佛王土。",
        "from": "T37n1763_050:0529c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始法身無定相、無定方所；",
        "from": "T37n1763_050:0529c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾生土有淨有穢。",
        "from": "T37n1763_050:0529c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初成道要處眾生淨土。",
        "from": "T37n1763_050:0529c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何者？",
        "from": "T37n1763_050:0529c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由眾生行熟，應淨眾生，不出惡土。",
        "from": "T37n1763_050:0529c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自報土無方，不須說名也；",
        "from": "T37n1763_050:0529c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無勝土是眾生土。",
        "from": "T37n1763_050:0529c11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言淨土者，初成佛處也。",
        "from": "T37n1763_050:0529c12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此世界清淨者，彌勒成佛時，此世界變淨，應淨眾生，亦不出淨土也。",
        "from": "T37n1763_050:0529c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0529c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既列解十事竟，時眾有不達之流，謂言：",
        "from": "T37n1763_050:0529c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋迦唯修九事，不修於淨土。",
        "from": "T37n1763_050:0529c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以德王為申疑而致問。",
        "from": "T37n1763_050:0529c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛下答云：",
        "from": "T37n1763_050:0529c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十方諸佛無有不修十事者。",
        "from": "T37n1763_050:0529c16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答一因不滿，不得成佛，何容我獨闕斯行？",
        "from": "T37n1763_050:0529c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由世癡人言：",
        "from": "T37n1763_050:0529c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此方有日月：",
        "from": "T37n1763_050:0529c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "他方無。",
        "from": "T37n1763_050:0529c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如此之疑者：",
        "from": "T37n1763_050:0529c18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與癡人何異？",
        "from": "T37n1763_050:0529c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設譬既竟，於下愚之流信心未立，故佛懸指西方無勝佛國以示物，云是我之本國。",
        "from": "T37n1763_050:0529c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今之所居者，是現來此化。",
        "from": "T37n1763_050:0529c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得知尋於此言，無一佛應世，無穢無淨。",
        "from": "T37n1763_050:0529c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其事如初功德中所明。",
        "from": "T37n1763_050:0529c23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此間既說東方滿月如來之淨，滿月佛於彼，復何容疑釋迦所王是穢。",
        "from": "T37n1763_050:0529c24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "答當彼土純淨，心無所執，亦不容與此間德王作定有定無難同，故得知彼此兩國各辨其一邊，令眾生盡得進行也。",
        "from": "T37n1763_050:0529c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_050:0529c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩至具足如是五事功德。",
        "from": "T37n1763_050:0529c29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0529c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五第六，天行功德也，而經文不出。",
        "from": "T37n1763_050:0530a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依餘經，四禪是天行，此五是修禪之本也。",
        "from": "T37n1763_050:0530a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_050:0530a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉是定家之緣也。",
        "from": "T37n1763_050:0530a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸根及生邊地者，何能修禪定耶？",
        "from": "T37n1763_050:0530a03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0530a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五功德，以五事為體。",
        "from": "T37n1763_050:0530a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一第二以離難故，能修定。",
        "from": "T37n1763_050:0530a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三第四以宿殖因緣故，天護人愛。",
        "from": "T37n1763_050:0530a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五事即是定果。",
        "from": "T37n1763_050:0530a06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即既解五事竟，德王今執昔教作難。",
        "from": "T37n1763_050:0530a06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔言因布施故得此五事，今云何言因《大涅槃經》得五事耶？",
        "from": "T37n1763_050:0530a08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛答云：",
        "from": "T37n1763_050:0530a08_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔日因布施得五事者，不定不常；",
        "from": "T37n1763_050:0530a09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今因涅槃得此五事，是定是常，乃至得無漏。",
        "from": "T37n1763_050:0530a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故得知《法華》以前教，無入道者。",
        "from": "T37n1763_050:0530a10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若使有實得道，不應言非無漏。",
        "from": "T37n1763_050:0530a11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋斯之語，當知無會理也。",
        "from": "T37n1763_050:0530a12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明遍照高貴德王至具足成就第五功德。",
        "from": "T37n1763_050:0530a13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0530a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是定是常，一一對前五事。",
        "from": "T37n1763_050:0530a14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "渴愛之病者，對不定下四。",
        "from": "T37n1763_050:0530a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦有分有果者，有三有分果，無常變異。",
        "from": "T37n1763_050:0530a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三昧者，具上五事，必得四禪。",
        "from": "T37n1763_050:0530a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三昧定中之勝，說其德也。",
        "from": "T37n1763_050:0530a17_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶亮曰：",
        "from": "T37n1763_050:0530a17_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俱是明定，前淺後深。",
        "from": "T37n1763_050:0530a18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中三段：",
        "from": "T37n1763_050:0530a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一就空行中成就萬行；",
        "from": "T37n1763_050:0530a19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二明是眾定王萬行之果；",
        "from": "T37n1763_050:0530a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三明非唯了空亦是萬有也。",
        "from": "T37n1763_050:0530a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次善男子！",
        "from": "T37n1763_050:0530a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何菩薩至具足成就第六功德。",
        "from": "T37n1763_050:0530a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案寶亮曰：",
        "from": "T37n1763_050:0530a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六功德，以金剛三昧為體。",
        "from": "T37n1763_050:0530a22_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三昧即一切智，于時集諦累盡，體由是苦無常。",
        "from": "T37n1763_050:0530a24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦果亦謝，無學佛果任運而來，則金剛心時始是功用心滿。",
        "from": "T37n1763_050:0530a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名為學佛，不得稱無學，所以說金剛眾定之極。",
        "from": "T37n1763_050:0530a26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就此一切德中，略科為八段：",
        "from": "T37n1763_050:0530a27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一從「悉能破散一切諸法」下，明得金剛定時，知世諦理窮。",
        "from": "T37n1763_050:0530a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二從「住是地中乃至不見一眾生實」下，明悉見真諦理周。",
        "from": "T37n1763_050:0530a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三從「一切三昧悉來歸屬」下，明得此定時，一切三昧皆來歸屬金剛三昧。",
        "from": "T37n1763_050:0530b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四從「譬如有人在大海浴」下，明得此定時，非唯歸屬而已，即用此眾定為體，一心之中得用一切定也。",
        "from": "T37n1763_050:0530b04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五從「若有菩薩住金剛定，見一切法無障礙」下，明得天眼通滿。",
        "from": "T37n1763_050:0530b06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六從「如由乾陀」已下，明漏盡通滿。",
        "from": "T37n1763_050:0530b07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七從「若有菩薩住金剛三昧，於一念中能變身如佛」下，明身通用備。",
        "from": "T37n1763_050:0530b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第八從「譬如金剛若在日中色則不定」下，頻有三譬來讚歎金剛三昧，能種種變應，無不益物也。",
        "from": "T37n1763_050:0530b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以證金剛心時，結累永盡照理周者，正以此文為據也。",
        "from": "T37n1763_050:0530b12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩修大涅槃至乃至具足般若波羅蜜。",
        "from": "T37n1763_050:0530b14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_050:0530b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第一，歎就空行中成就萬行也。",
        "from": "T37n1763_050:0530b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_050:0530b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如金剛所擬之處至修集一切諸餘三昧。",
        "from": "T37n1763_050:0530b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_050:0530b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二，明是眾定之王、萬行之果。",
        "from": "T37n1763_050:0530b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_050:0530b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有菩薩安住如是至乃至十方亦復如是。",
        "from": "T37n1763_050:0530b20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_050:0530b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三，明非唯了空，亦見於有也。",
        "from": "T37n1763_050:0530b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子！",
        "from": "T37n1763_050:0530b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如由乾陀山至而初無心言我能滅。",
        "from": "T37n1763_050:0530b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0530b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第四，明能滅一切惑也。",
        "from": "T37n1763_050:0530b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有菩薩安住如是至各隨本解而得聞之。",
        "from": "T37n1763_050:0530b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧宗曰：",
        "from": "T37n1763_050:0530b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第五，明能有運變之力也。",
        "from": "T37n1763_050:0530b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩安住如是三昧至見一切法如本無相。",
        "from": "T37n1763_050:0530b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0530b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第六，更舉空境，言諸德所以成就，良由善識空也。",
        "from": "T37n1763_050:0530b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何故名為金剛三昧至具足成就第六功德。",
        "from": "T37n1763_050:0530b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "案僧亮曰：",
        "from": "T37n1763_050:0530c01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "具上五事，必得四禪。",
        "from": "T37n1763_050:0530c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三昧定中之勝，說其德也。",
        "from": "T37n1763_050:0530c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能有二種：",
        "from": "T37n1763_050:0530c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一壞有、二成六度也。",
        "from": "T37n1763_050:0530c03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無不碎壞者，為上壞有作譬。",
        "from": "T37n1763_050:0530c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉來歸屬者，將與成萬行為譬，先說法之所歸，下六是其譬也。",
        "from": "T37n1763_050:0530c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有障礙者，說六通廣金剛之能，先總諸通、後但別說三通耳。",
        "from": "T37n1763_050:0530c06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧宗曰：",
        "from": "T37n1763_050:0530c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七，釋金剛之名也。",
        "from": "T37n1763_050:0530c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大般涅槃經集解卷第五十涅槃經集解七十一卷。",
        "from": "T37n1763_050:0530c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "去享保年中。",
        "from": "T37n1763_050:0530c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲西大寺經藏古本。",
        "from": "T37n1763_050:0530c10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "書寫之焉。",
        "from": "T37n1763_050:0530c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼本黃卷赤軸。",
        "from": "T37n1763_050:0530c10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "古代雅物。",
        "from": "T37n1763_050:0530c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偶闕九軸。",
        "from": "T37n1763_050:0530c11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "厥所闕者。",
        "from": "T37n1763_050:0530c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自四十一。",
        "from": "T37n1763_050:0530c11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迄第五十。",
        "from": "T37n1763_050:0530c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中唯存第四十三。",
        "from": "T37n1763_050:0530c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "予歎其不全備。",
        "from": "T37n1763_050:0530c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "索之諸方。",
        "from": "T37n1763_050:0530c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞武府東叡山凌雲院。",
        "from": "T37n1763_050:0530c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前大僧正實觀祕藏之。",
        "from": "T37n1763_050:0530c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其本又自第一。",
        "from": "T37n1763_050:0530c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至第十之十軸逸矣。",
        "from": "T37n1763_050:0530c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甞戒壇院慧光。",
        "from": "T37n1763_050:0530c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "赴東都之日。",
        "from": "T37n1763_050:0530c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與實觀相語。",
        "from": "T37n1763_050:0530c16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而欲令互寄補其闕。",
        "from": "T37n1763_050:0530c16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸得實觀本跋記。",
        "from": "T37n1763_050:0530c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以延曆寺本。",
        "from": "T37n1763_050:0530c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "校閱云爾。",
        "from": "T37n1763_050:0530c17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不日繕寫。",
        "from": "T37n1763_050:0530c18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "情願果遂。",
        "from": "T37n1763_050:0530c18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧正亦補。",
        "from": "T37n1763_050:0530c18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其闕焉。",
        "from": "T37n1763_050:0530c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今年庚申。",
        "from": "T37n1763_050:0530c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閑暇之間。",
        "from": "T37n1763_050:0530c19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲補西大寺古本之闕。",
        "from": "T37n1763_050:0530c19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "手自以麁紙調經卷。",
        "from": "T37n1763_050:0530c20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自三月二十日。",
        "from": "T37n1763_050:0530c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迄五月二十三日。",
        "from": "T37n1763_050:0530c21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩挲病眼。",
        "from": "T37n1763_050:0530c21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九軸寫之。",
        "from": "T37n1763_050:0530c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴既畢。",
        "from": "T37n1763_050:0530c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以納于彼寺矣。",
        "from": "T37n1763_050:0530c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不年而三本全備。",
        "from": "T37n1763_050:0530c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不亦說乎。",
        "from": "T37n1763_050:0530c22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功悳普及三界靈。",
        "from": "T37n1763_050:0530c23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種因遂感四德果。",
        "from": "T37n1763_050:0530c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時元文第五歲次庚申六月下弦。",
        "from": "T37n1763_050:0530c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東大寺真言新禪兩院前兼住戒壇院前長官寶生院閑人成慶寓于北林精舍謹記。",
        "from": "T37n1763_050:0530c27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "春秋五十六。",
        "from": "T37n1763_050:0530c27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夏臘通三十八。",
        "from": "T37n1763_050:0530c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "別二十八。",
        "from": "T37n1763_050:0530c28_2",
        "context_with_next_sentence": true
    }
]