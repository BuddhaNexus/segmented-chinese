[
    {
        "source_sentence": "阿毘達磨俱舍論實義疏卷第五",
        "from": "T29n1561_005:0327a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尊者安惠造",
        "from": "T29n1561_005:0327a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "2 分別根品分別根品第二之一論卷第三",
        "from": "T29n1561_005:0327a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T29n1561_005:0327a28_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傳說五於四，　　四根於二種，",
        "from": "T29n1561_005:0327a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五八染淨中，　　各別為增上。",
        "from": "T29n1561_005:0327b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論曰：",
        "from": "T29n1561_005:0327b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼等五根至聞聲別故。",
        "from": "T29n1561_005:0327b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌云：",
        "from": "T29n1561_005:0327b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如明眼人，　　能避現險難，",
        "from": "T29n1561_005:0327b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世有聰明者，　　能離當苦惠。",
        "from": "T29n1561_005:0327b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞能知法，　　多聞能離罪，",
        "from": "T29n1561_005:0327b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞捨無義，　　多聞得涅槃。",
        "from": "T29n1561_005:0327b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T29n1561_005:0327b07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身由食住，　　命託食存，　　食已令心，",
        "from": "T29n1561_005:0327b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "適悅安泰。",
        "from": "T29n1561_005:0327b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男入胎，於母生愛、於父生恚。",
        "from": "T29n1561_005:0327b10_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若女入胎，於父生愛、於母生恚。",
        "from": "T29n1561_005:0327b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由如故知能續後有，皆是染心。",
        "from": "T29n1561_005:0327b12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是以意根於續後有。",
        "from": "T29n1561_005:0327b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經云：",
        "from": "T29n1561_005:0327b13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母精血入胎者，識所攝持方能成就羯剌藍也。",
        "from": "T29n1561_005:0327b14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋曰：",
        "from": "T29n1561_005:0327b15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此顯身語隨心轉義。",
        "from": "T29n1561_005:0327b15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如契經言：",
        "from": "T29n1561_005:0327b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心能導世間，心能遍攝受，如是心一法，皆自在隨行。",
        "from": "T29n1561_005:0327b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T29n1561_005:0327b17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了自境增上，　　惣立於六根，",
        "from": "T29n1561_005:0327b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從身立二根，　　女男情增上。",
        "from": "T29n1561_005:0327b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於同住雜住，　　清淨增上，",
        "from": "T29n1561_005:0327b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應知命五受，　　信等立為根。",
        "from": "T29n1561_005:0327b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未當知已知，　　具知根亦爾，",
        "from": "T29n1561_005:0327b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於得後後道，　　涅槃等增上。",
        "from": "T29n1561_005:0327b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論頌云：",
        "from": "T29n1561_005:0327b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身不悅名苦，　　即此悅名樂，",
        "from": "T29n1561_005:0327b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及三定心悅，　　餘處此名喜，",
        "from": "T29n1561_005:0327b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心不悅名憂，　　中捨二無別，",
        "from": "T29n1561_005:0327b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見修無學道，　　依九立三根。",
        "from": "T29n1561_005:0327b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T29n1561_005:0327b29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯無漏後三，　　有色命憂苦，",
        "from": "T29n1561_005:0327c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常知唯有漏，　　通二餘九根。",
        "from": "T29n1561_005:0327c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "言最後三根定是無漏，除此三根之外不通無漏。",
        "from": "T29n1561_005:0327c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契經言：",
        "from": "T29n1561_005:0327c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊成正覺已，作是思惟：",
        "from": "T29n1561_005:0327c04_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所證法甚深微妙，難見難解、不可思議，非尋思境，是智者所知，非凡愚所及。",
        "from": "T29n1561_005:0327c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯諸眾生久習邪教，愛著諸有，諸見所惑亂故不能解了。",
        "from": "T29n1561_005:0327c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以不了故不能信受，及生嬈惱。",
        "from": "T29n1561_005:0327c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我所言說無所利益，唐沒劬勞。",
        "from": "T29n1561_005:0327c09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不如寂法受解脫樂。",
        "from": "T29n1561_005:0327c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是念已默然而住。",
        "from": "T29n1561_005:0327c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時娑婆世界主大梵天王知佛世尊作如是念，即自思惟：",
        "from": "T29n1561_005:0327c11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此世界中諸眾生等多所失壞。",
        "from": "T29n1561_005:0327c12_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今佛世尊證無上法，深廣微妙慮諸眾生不能信受，遂處閑寂受現法樂。",
        "from": "T29n1561_005:0327c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我應詣彼勸請世尊轉妙法輪。",
        "from": "T29n1561_005:0327c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是念已，譬如壯士屈申臂頃，從梵宮沒，至於佛所。",
        "from": "T29n1561_005:0327c15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂禮佛足，遶三匝已，却住一面，合掌恭敬而白佛言：",
        "from": "T29n1561_005:0327c17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊！",
        "from": "T29n1561_005:0327c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此世界中諸眾生等久習異教，見惑縈纏，流轉生死，無所歸依、無所救護。",
        "from": "T29n1561_005:0327c18_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊曠劫為諸眾生修行󰢷引，今者得成無上正覺證無上法，出現於世如優曇花。",
        "from": "T29n1561_005:0327c20_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不為有情隨機演說，處於閑寂靜默而住。",
        "from": "T29n1561_005:0327c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊降大悲心哀愍世間，為諸有情說正法要。",
        "from": "T29n1561_005:0327c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有諸眾生諸結微薄，機宜成熟、利根易化，不聞法故自然損減失大法利。",
        "from": "T29n1561_005:0327c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊為諸眾生開甘露門、說微妙法，令諸有情利益安樂。",
        "from": "T29n1561_005:0327c26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時大梵天王勸請世尊而說偈言：",
        "from": "T29n1561_005:0327c26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊出現為優曇，　　曠劫難逢今一遇，",
        "from": "T29n1561_005:0327c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普為有情獲法利，　　唯願廣開甘露門。",
        "from": "T29n1561_005:0327c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊聞梵天王勸請偈已，起大悲心，即以道眼觀諸有情，或有鈍根執著諸有，或有中根少厭生死，或有利根而不放逸。",
        "from": "T29n1561_005:0328a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是世尊觀諸世間一切有情，處在世間或生或長，根有利鈍，或有易化得道。",
        "from": "T29n1561_005:0328a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如實知已，受梵王請，許轉法輪，而說偈言：",
        "from": "T29n1561_005:0328a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大梵天王善諦聽，　　我所得法甚微妙，",
        "from": "T29n1561_005:0328a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為汝等廣開演，　　令於長夜獲安樂。",
        "from": "T29n1561_005:0328a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T29n1561_005:0328a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命唯是異熟，　　憂及後八非，",
        "from": "T29n1561_005:0328a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色意餘四受，　　一一皆通二。",
        "from": "T29n1561_005:0328a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "論：",
        "from": "T29n1561_005:0328a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯一命根定是異熟。",
        "from": "T29n1561_005:0328a11_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋曰：",
        "from": "T29n1561_005:0328a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無一命根非是異熟。",
        "from": "T29n1561_005:0328a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T29n1561_005:0328a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "北洲定千年，　　西東半日減，",
        "from": "T29n1561_005:0328a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此洲壽不定，　　後十初叵量。",
        "from": "T29n1561_005:0328a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "等世間有情所餘福業，咸發願言：",
        "from": "T29n1561_005:0328a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我長壽。",
        "from": "T29n1561_005:0328a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不願言：",
        "from": "T29n1561_005:0328a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願我住壽至於百年或住九十八十年等。",
        "from": "T29n1561_005:0328a17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有尊人及親友等恒祝之言：",
        "from": "T29n1561_005:0328a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願汝長壽。",
        "from": "T29n1561_005:0328a18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不定言爾所時等。",
        "from": "T29n1561_005:0328a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以此洲人所作諸業，與貪心俱，作是願。",
        "from": "T29n1561_005:0328a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "契經中說：",
        "from": "T29n1561_005:0328a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻當知，毘婆尸佛時人壽八萬歲，乃至迦葉波佛時人壽二萬歲。",
        "from": "T29n1561_005:0328a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今出世，人壽百歲。",
        "from": "T29n1561_005:0328a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "少出多減等。",
        "from": "T29n1561_005:0328a22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽若無定限者，世尊何故作如是說？",
        "from": "T29n1561_005:0328a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫初諸根大種殊勝，壽即延長。",
        "from": "T29n1561_005:0328a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今時漸劣，故壽難至于十歲。",
        "from": "T29n1561_005:0328a24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "福盡即死，不因命也。",
        "from": "T29n1561_005:0328a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修故塔寺能延其壽。",
        "from": "T29n1561_005:0328a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頌曰：",
        "from": "T29n1561_005:0328a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵行妙成立，　　聖道已善修，",
        "from": "T29n1561_005:0328a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽盡時歡喜，　　猶如捨眾病。",
        "from": "T29n1561_005:0328a27_13",
        "context_with_next_sentence": true
    }
]