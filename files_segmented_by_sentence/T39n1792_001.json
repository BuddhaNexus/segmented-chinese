{
    "T39n1792_001:0505a03_0": "佛說盂蘭盆經疏上",
    "T39n1792_001:0505a05_0": "充國沙門宗密述",
    "T39n1792_001:0505a06_0": "始於混沌。",
    "T39n1792_001:0505a06_1": "塞乎天地。",
    "T39n1792_001:0505a06_2": "通人神。",
    "T39n1792_001:0505a06_3": "貫貴賤。",
    "T39n1792_001:0505a06_4": "儒釋皆宗之。",
    "T39n1792_001:0505a07_5": "其唯孝道矣。",
    "T39n1792_001:0505a07_6": "應孝子之懇誠。",
    "T39n1792_001:0505a07_7": "救二親之苦厄。",
    "T39n1792_001:0505a08_8": "酬昊天恩德。",
    "T39n1792_001:0505a08_9": "其唯盂蘭盆之教焉。",
    "T39n1792_001:0505a08_10": "宗密罪釁早年喪親。",
    "T39n1792_001:0505a09_11": "每履雪霜之悲。",
    "T39n1792_001:0505a09_12": "永懷風樹之恨。",
    "T39n1792_001:0505a10_13": "竊以終身墳壟。",
    "T39n1792_001:0505a10_14": "卒世蒸嘗。",
    "T39n1792_001:0505a10_15": "雖展孝思不資神道。",
    "T39n1792_001:0505a11_16": "遂搜索聖賢之教。",
    "T39n1792_001:0505a11_17": "虔求追薦之方。",
    "T39n1792_001:0505a11_18": "得此法門。",
    "T39n1792_001:0505a12_19": "實是妙行。",
    "T39n1792_001:0505a12_20": "年年僧自恣日。",
    "T39n1792_001:0505a12_21": "四事供養三尊。",
    "T39n1792_001:0505a13_22": "宗密依之修崇。",
    "T39n1792_001:0505a13_23": "已歷多載。",
    "T39n1792_001:0505a13_24": "兼講其誥。",
    "T39n1792_001:0505a13_25": "用是未聞今因歸鄉。",
    "T39n1792_001:0505a14_26": "依日開設道俗耆艾。",
    "T39n1792_001:0505a14_27": "悲喜遵行。",
    "T39n1792_001:0505a15_28": "異口同音。",
    "T39n1792_001:0505a15_29": "請製新疏。",
    "T39n1792_001:0505a15_30": "心在松柏。",
    "T39n1792_001:0505a15_31": "豈慢鄉閭。",
    "T39n1792_001:0505a16_32": "式允來情。",
    "T39n1792_001:0505a16_33": "發揮要道。",
    "T39n1792_001:0505a17_0": "稽首三界主。",
    "T39n1792_001:0505a17_1": "大孝釋迦尊。",
    "T39n1792_001:0505a17_2": "累劫報親恩。",
    "T39n1792_001:0505a17_3": "積因成正覺。",
    "T39n1792_001:0505a18_4": "將永錫眾類。",
    "T39n1792_001:0505a18_5": "應請演斯經。",
    "T39n1792_001:0505a18_6": "欲使背恩人。",
    "T39n1792_001:0505a19_7": "咸能酬罔極。",
    "T39n1792_001:0505a19_8": "我今所讚述。",
    "T39n1792_001:0505a19_9": "願眾聖冥加。",
    "T39n1792_001:0505a19_10": "自他存歿親。",
    "T39n1792_001:0505a20_11": "離苦常安樂。",
    "T39n1792_001:0505a21_0": "將解此經。",
    "T39n1792_001:0505a21_1": "先開四段。",
    "T39n1792_001:0505a21_2": "一教起所因。",
    "T39n1792_001:0505a21_3": "二藏乘所攝。",
    "T39n1792_001:0505a22_4": "三辨定宗旨。",
    "T39n1792_001:0505a22_5": "四正解經文。",
    "T39n1792_001:0505a22_6": "初中復四。",
    "T39n1792_001:0505a22_7": "一酬宿因故。",
    "T39n1792_001:0505a23_8": "二酬今請故。",
    "T39n1792_001:0505a23_9": "三彰孝道故。",
    "T39n1792_001:0505a23_10": "四示勝田故　初教起所因(四)　初酬宿因者。",
    "T39n1792_001:0505a24_11": "悉達太子。",
    "T39n1792_001:0505a25_12": "不紹王位。",
    "T39n1792_001:0505a25_13": "捨親去國。",
    "T39n1792_001:0505a25_14": "本為修行得道報父母恩。",
    "T39n1792_001:0505a26_15": "然菩薩用心。",
    "T39n1792_001:0505a26_16": "不務專己。",
    "T39n1792_001:0505a26_17": "故開盂蘭法會。",
    "T39n1792_001:0505a27_18": "以福自他二親。",
    "T39n1792_001:0505a27_19": "此經所興。",
    "T39n1792_001:0505a27_20": "本意如此。",
    "T39n1792_001:0505a28_0": "二酬今請者。",
    "T39n1792_001:0505a28_1": "謂大目犍連因心之孝。",
    "T39n1792_001:0505a28_2": "欲度父母。",
    "T39n1792_001:0505a29_3": "報乳哺之恩故。",
    "T39n1792_001:0505a29_4": "出家修行。",
    "T39n1792_001:0505a29_5": "神通第一。",
    "T39n1792_001:0505a29_6": "觀見亡母。",
    "T39n1792_001:0505b01_7": "墮餓鬼中。",
    "T39n1792_001:0505b01_8": "自救不能。",
    "T39n1792_001:0505b01_9": "白佛求法。",
    "T39n1792_001:0505b01_10": "佛示盆供。",
    "T39n1792_001:0505b02_11": "救母倒懸。",
    "T39n1792_001:0505b02_12": "繇愛其親。",
    "T39n1792_001:0505b02_13": "施及一切故。",
    "T39n1792_001:0505b03_0": "為道俗弟子。",
    "T39n1792_001:0505b03_1": "請佛留此法門。",
    "T39n1792_001:0505b03_2": "酬目連所請。",
    "T39n1792_001:0505b04_0": "即是說經之繇致也。",
    "T39n1792_001:0505b04_1": "三彰孝道者。",
    "T39n1792_001:0505b04_2": "復有其二。",
    "T39n1792_001:0505b05_3": "一通明孝為二教之宗本。",
    "T39n1792_001:0505b05_4": "二別明二教行孝之同異。",
    "T39n1792_001:0505b06_5": "初通明中。",
    "T39n1792_001:0505b06_6": "且明儒教。",
    "T39n1792_001:0505b06_7": "以孝為本者。",
    "T39n1792_001:0505b07_8": "謂始自天子。",
    "T39n1792_001:0505b07_9": "至於士人。",
    "T39n1792_001:0505b07_10": "家國相傳。",
    "T39n1792_001:0505b07_11": "皆立宗廟。",
    "T39n1792_001:0505b08_12": "雖五孝之用。",
    "T39n1792_001:0505b08_13": "則別而不行之。",
    "T39n1792_001:0505b08_14": "源不殊故。",
    "T39n1792_001:0505b09_15": "開宗明義。",
    "T39n1792_001:0505b09_16": "章中標為至德要道。",
    "T39n1792_001:0505b09_17": "道德以之為體。",
    "T39n1792_001:0505b10_18": "教法繇是而生。",
    "T39n1792_001:0505b10_19": "何有君子。",
    "T39n1792_001:0505b10_20": "而不務本。",
    "T39n1792_001:0505b10_21": "既為天經地義。",
    "T39n1792_001:0505b11_22": "須令企及俯從。",
    "T39n1792_001:0505b11_23": "雖論禮壞樂崩終訶衣錦食稻。",
    "T39n1792_001:0505b12_24": "甚哉孝之大也。",
    "T39n1792_001:0505b12_25": "聖人之德。",
    "T39n1792_001:0505b13_0": "又何以加於孝乎。",
    "T39n1792_001:0505b13_1": "次釋教以孝為本者。",
    "T39n1792_001:0505b13_2": "然一切佛。",
    "T39n1792_001:0505b14_3": "皆有真化二身。",
    "T39n1792_001:0505b14_4": "釋迦化身說。",
    "T39n1792_001:0505b14_5": "隨機權教。",
    "T39n1792_001:0505b15_0": "舍那真身說。",
    "T39n1792_001:0505b15_1": "究竟實教。",
    "T39n1792_001:0505b15_2": "教者。",
    "T39n1792_001:0505b15_3": "經律也。",
    "T39n1792_001:0505b15_4": "經詮理智。",
    "T39n1792_001:0505b16_5": "律詮戒行。",
    "T39n1792_001:0505b16_6": "戒雖萬行。",
    "T39n1792_001:0505b16_7": "以孝為宗。",
    "T39n1792_001:0505b16_8": "故我盧舍那佛。",
    "T39n1792_001:0505b17_9": "最初成正覺時。",
    "T39n1792_001:0505b17_10": "便說華嚴大經。",
    "T39n1792_001:0505b17_11": "菩薩大戒。",
    "T39n1792_001:0505b18_12": "又經標云。",
    "T39n1792_001:0505b18_13": "爾時釋迦牟尼佛。",
    "T39n1792_001:0505b18_14": "初坐菩提樹下。",
    "T39n1792_001:0505b19_15": "成無上正覺已。",
    "T39n1792_001:0505b19_16": "初結菩薩波羅提木叉。",
    "T39n1792_001:0505b20_17": "孝順父母。",
    "T39n1792_001:0505b20_18": "師僧三寶。",
    "T39n1792_001:0505b20_19": "孝順至道之法。",
    "T39n1792_001:0505b21_0": "孝名為戒。",
    "T39n1792_001:0505b21_1": "亦名制止。",
    "T39n1792_001:0505b21_2": "涅槃亦云。",
    "T39n1792_001:0505b21_3": "奇哉父母。",
    "T39n1792_001:0505b22_0": "生育我等。",
    "T39n1792_001:0505b22_1": "受大苦惱。",
    "T39n1792_001:0505b22_2": "滿足十月。",
    "T39n1792_001:0505b22_3": "懷抱我身。",
    "T39n1792_001:0505b22_4": "既生之後。",
    "T39n1792_001:0505b23_5": "推乾就濕除去不淨。",
    "T39n1792_001:0505b23_6": "大小便利。",
    "T39n1792_001:0505b23_7": "乳哺長養。",
    "T39n1792_001:0505b24_8": "將護我身。",
    "T39n1792_001:0505b24_9": "以是義故。",
    "T39n1792_001:0505b24_10": "應當報恩。",
    "T39n1792_001:0505b24_11": "隨順供養。",
    "T39n1792_001:0505b25_12": "上通明二教以孝為本竟。",
    "T39n1792_001:0505b25_13": "次別明二教行孝之同異者。",
    "T39n1792_001:0505b26_14": "於中初明其異。",
    "T39n1792_001:0505b26_15": "後顯其同。",
    "T39n1792_001:0505b26_16": "初謂生前侍養異。",
    "T39n1792_001:0505b27_17": "後謂歿後追思異。",
    "T39n1792_001:0505b27_18": "侍養異者。",
    "T39n1792_001:0505b28_0": "儒宗則慎護髮膚。",
    "T39n1792_001:0505b28_1": "揚名後代。",
    "T39n1792_001:0505b28_2": "故樂春不出。",
    "T39n1792_001:0505b28_3": "曾子開衾。",
    "T39n1792_001:0505b29_4": "釋教則祝髮壞衣。",
    "T39n1792_001:0505b29_5": "法資現世。",
    "T39n1792_001:0505b29_6": "故優陀通信。",
    "T39n1792_001:0505c01_7": "淨藏回邪。",
    "T39n1792_001:0505c01_8": "是謂為善不同。",
    "T39n1792_001:0505c01_9": "同歸乎孝。",
    "T39n1792_001:0505c02_0": "歿後異者。",
    "T39n1792_001:0505c02_1": "復有三異。",
    "T39n1792_001:0505c02_2": "一居喪異。",
    "T39n1792_001:0505c02_3": "儒則棺槨宅兆安墓留形。",
    "T39n1792_001:0505c03_4": "釋則念誦追齋薦其去識。",
    "T39n1792_001:0505c03_5": "二齋忌異。",
    "T39n1792_001:0505c04_6": "儒則內齋。",
    "T39n1792_001:0505c04_7": "外定想其聲容。",
    "T39n1792_001:0505c04_8": "釋則設供講經資其業報。",
    "T39n1792_001:0505c05_9": "三終身異。",
    "T39n1792_001:0505c05_10": "儒則四時殺命。",
    "T39n1792_001:0505c05_11": "春夏秋冬。",
    "T39n1792_001:0505c06_12": "釋則三節放生施戒盆會。",
    "T39n1792_001:0505c06_13": "良繇真宗。",
    "T39n1792_001:0505c07_0": "未至周孔。",
    "T39n1792_001:0505c07_1": "且使繫心今知禮有所歸。",
    "T39n1792_001:0505c07_2": "不應猶執權教。",
    "T39n1792_001:0505c08_3": "且福之大者。",
    "T39n1792_001:0505c08_4": "莫大於施。",
    "T39n1792_001:0505c08_5": "生是釋梵之本因。",
    "T39n1792_001:0505c09_6": "類天地之大德。",
    "T39n1792_001:0505c09_7": "今殺彼祭此。",
    "T39n1792_001:0505c09_8": "豈近仁心。",
    "T39n1792_001:0505c10_9": "是若可忍。",
    "T39n1792_001:0505c10_10": "孰不可忍。",
    "T39n1792_001:0505c10_11": "雖云祈福。",
    "T39n1792_001:0505c10_12": "實是立讎。",
    "T39n1792_001:0505c11_13": "自徇虛名。",
    "T39n1792_001:0505c11_14": "殃於神道。",
    "T39n1792_001:0505c11_15": "問父母生於餘趣。",
    "T39n1792_001:0505c11_16": "則可改祭為齋。",
    "T39n1792_001:0505c12_17": "如墮鬼中。",
    "T39n1792_001:0505c12_18": "寧無饗祀。",
    "T39n1792_001:0505c12_19": "答黍稷非馨。",
    "T39n1792_001:0505c13_20": "蘋蘩可薦。",
    "T39n1792_001:0505c13_21": "應知禴祭。",
    "T39n1792_001:0505c13_22": "勝於殺牛。",
    "T39n1792_001:0505c13_23": "況鬼神等差。",
    "T39n1792_001:0505c14_24": "豈皆受饗。",
    "T39n1792_001:0505c14_25": "上明異竟。",
    "T39n1792_001:0505c14_26": "次顯其同者。",
    "T39n1792_001:0505c14_27": "復有其二。",
    "T39n1792_001:0505c15_28": "初明存歿同。",
    "T39n1792_001:0505c15_29": "後明罪福同今初約紀孝行章中五句之文以辨其同。",
    "T39n1792_001:0505c16_30": "即攝於生前歿後也。",
    "T39n1792_001:0505c17_31": "一居則致其敬者。",
    "T39n1792_001:0505c17_32": "儒則別於犬馬。",
    "T39n1792_001:0505c18_0": "釋則舉身七多。",
    "T39n1792_001:0505c18_1": "二養則致其樂者。",
    "T39n1792_001:0505c18_2": "儒則怡聲下氣溫清定省等故。",
    "T39n1792_001:0505c19_3": "有扇床溫席之流。",
    "T39n1792_001:0505c19_4": "釋則節量信毀分減衣鉢等故。",
    "T39n1792_001:0505c20_5": "有割肉充饑之類。",
    "T39n1792_001:0505c21_0": "三病則致其憂者。",
    "T39n1792_001:0505c21_1": "儒中如文帝先嘗湯藥。",
    "T39n1792_001:0505c21_2": "武王不脫冠帶。",
    "T39n1792_001:0505c22_3": "釋中如太子以肉為藥。",
    "T39n1792_001:0505c22_4": "高僧以身而擔。",
    "T39n1792_001:0505c23_5": "四喪則致其哀者。",
    "T39n1792_001:0505c23_6": "儒有武丁不言。",
    "T39n1792_001:0505c23_7": "子皐泣血。",
    "T39n1792_001:0505c24_8": "釋有目連大叫調御舁棺。",
    "T39n1792_001:0505c24_9": "五祭則致其嚴者。",
    "T39n1792_001:0505c25_10": "儒有薦笋之流。",
    "T39n1792_001:0505c25_11": "釋有餉飯之類。",
    "T39n1792_001:0505c25_12": "但以至教未來難弘報應。",
    "T39n1792_001:0505c26_13": "故先且立於祭法。",
    "T39n1792_001:0505c26_14": "令敬事於神靈。",
    "T39n1792_001:0505c27_15": "神靈則父母之識性。",
    "T39n1792_001:0505c27_16": "足顯祖考之常存。",
    "T39n1792_001:0505c28_17": "既形滅而神不滅。",
    "T39n1792_001:0505c28_18": "豈厚形而薄神乎。",
    "T39n1792_001:0505c29_0": "餘如前辨。",
    "T39n1792_001:0505c29_1": "上來存歿同竟。",
    "T39n1792_001:0505c29_2": "次辨罪福同。",
    "T39n1792_001:0505c29_3": "罪同者。",
    "T39n1792_001:0506a01_4": "儒則條越五刑。",
    "T39n1792_001:0506a01_5": "犯當五摘而恩赦不該。",
    "T39n1792_001:0506a01_6": "釋則名標七逆。",
    "T39n1792_001:0506a02_7": "戒黜七遮而阿鼻定入。",
    "T39n1792_001:0506a02_8": "福同者。",
    "T39n1792_001:0506a03_0": "儒則旌於門閭上天之報。",
    "T39n1792_001:0506a03_1": "釋則瑩於戒德淨土之因。",
    "T39n1792_001:0506a04_2": "上來總彰孝道竟。",
    "T39n1792_001:0506a04_3": "第四示勝田者。",
    "T39n1792_001:0506a05_0": "喻如世間人。",
    "T39n1792_001:0506a05_1": "欲得倉廩中五穀豐盈歲歲不乏者。",
    "T39n1792_001:0506a06_2": "必須取穀麥種子。",
    "T39n1792_001:0506a06_3": "以牛犁耕於田地而種之。",
    "T39n1792_001:0506a07_4": "不種則竭盡也。",
    "T39n1792_001:0506a07_5": "法中亦爾。",
    "T39n1792_001:0506a07_6": "以悲心敬心孝心為種子。",
    "T39n1792_001:0506a08_7": "以衣食財帛身命為牛犁。",
    "T39n1792_001:0506a08_8": "以貧病三寶父母為田地。",
    "T39n1792_001:0506a09_9": "有佛弟子。",
    "T39n1792_001:0506a09_10": "欲得藏識中百福莊嚴生生無盡者。",
    "T39n1792_001:0506a10_11": "須運悲敬孝心。",
    "T39n1792_001:0506a10_12": "將衣食財帛身命。",
    "T39n1792_001:0506a11_13": "給濟敬養於貧病三寶父母。",
    "T39n1792_001:0506a11_14": "名為種福。",
    "T39n1792_001:0506a12_15": "不種即貧窮無福慧。",
    "T39n1792_001:0506a12_16": "入生死險道。",
    "T39n1792_001:0506a12_17": "謂種福之田名為福田。",
    "T39n1792_001:0506a13_18": "如種穀之田名穀田也。",
    "T39n1792_001:0506a14_19": "然種子有精新乾焦。",
    "T39n1792_001:0506a14_20": "田有肥濃確瘦。",
    "T39n1792_001:0506a14_21": "如悲敬孝心有懇切閑縵。",
    "T39n1792_001:0506a15_22": "貧有淺深。",
    "T39n1792_001:0506a15_23": "病有輕重。",
    "T39n1792_001:0506a15_24": "佛有真化。",
    "T39n1792_001:0506a16_25": "化有住世入滅。",
    "T39n1792_001:0506a16_26": "法有大小。",
    "T39n1792_001:0506a16_27": "教有權實。",
    "T39n1792_001:0506a17_28": "僧有持毀。",
    "T39n1792_001:0506a17_29": "父母有現生七世。",
    "T39n1792_001:0506a17_30": "一一配肥瘦之田。",
    "T39n1792_001:0506a18_31": "昭然可見。",
    "T39n1792_001:0506a18_32": "今盂蘭供會具三種肥田。",
    "T39n1792_001:0506a19_0": "故云勝也。",
    "T39n1792_001:0506a19_1": "謂佛歡喜日。",
    "T39n1792_001:0506a19_2": "供養自恣淨戒大德。",
    "T39n1792_001:0506a20_0": "敬田勝也。",
    "T39n1792_001:0506a20_1": "報父母恩。",
    "T39n1792_001:0506a20_2": "恩田勝也。",
    "T39n1792_001:0506a20_3": "父母在厄難中。",
    "T39n1792_001:0506a21_4": "悲田勝也。",
    "T39n1792_001:0506a21_5": "為欲示此勝田故。",
    "T39n1792_001:0506a21_6": "說此經也。",
    "T39n1792_001:0506a22_0": "二藏乘所攝。",
    "T39n1792_001:0506a22_1": "第二藏乘所攝者。",
    "T39n1792_001:0506a22_2": "藏謂三藏。",
    "T39n1792_001:0506a23_0": "乘謂五乘。",
    "T39n1792_001:0506a23_1": "三藏者。",
    "T39n1792_001:0506a23_2": "一修多羅。",
    "T39n1792_001:0506a23_3": "此云契經。",
    "T39n1792_001:0506a23_4": "契者契理契機。",
    "T39n1792_001:0506a24_5": "經者。",
    "T39n1792_001:0506a24_6": "佛地論云。",
    "T39n1792_001:0506a24_7": "貫攝為義。",
    "T39n1792_001:0506a24_8": "謂貫穿所應知義。",
    "T39n1792_001:0506a25_9": "攝持所化生故。",
    "T39n1792_001:0506a25_10": "此教於三學中詮於定學。",
    "T39n1792_001:0506a26_11": "二毘奈耶。",
    "T39n1792_001:0506a26_12": "此云調伏。",
    "T39n1792_001:0506a26_13": "調謂調練三業。",
    "T39n1792_001:0506a27_14": "伏謂制伏過非。",
    "T39n1792_001:0506a27_15": "此教詮於戒學。",
    "T39n1792_001:0506a27_16": "三阿毘達磨。",
    "T39n1792_001:0506a28_17": "此云對法。",
    "T39n1792_001:0506a28_18": "法謂涅槃四諦。",
    "T39n1792_001:0506a28_19": "對謂對向對觀。",
    "T39n1792_001:0506a29_0": "其能對者。",
    "T39n1792_001:0506a29_1": "即是妙慧。",
    "T39n1792_001:0506a29_2": "此教詮於慧學。",
    "T39n1792_001:0506a29_3": "然經是化教。",
    "T39n1792_001:0506b01_4": "開誘化導也。",
    "T39n1792_001:0506b01_5": "律是制教。",
    "T39n1792_001:0506b01_6": "制約行業也。",
    "T39n1792_001:0506b02_0": "論則推徵。",
    "T39n1792_001:0506b02_1": "解釋經律之意也。",
    "T39n1792_001:0506b02_2": "今此盂蘭盆據其名題。",
    "T39n1792_001:0506b03_3": "即化教攝。",
    "T39n1792_001:0506b03_4": "屬於經藏。",
    "T39n1792_001:0506b03_5": "據其義意亦制教攝。",
    "T39n1792_001:0506b04_6": "屬於律藏。",
    "T39n1792_001:0506b04_7": "五乘者。",
    "T39n1792_001:0506b04_8": "乘以運載為名。",
    "T39n1792_001:0506b04_9": "五謂人天聲聞緣覺菩薩。",
    "T39n1792_001:0506b05_10": "此五力有大小。",
    "T39n1792_001:0506b05_11": "載有遠近。",
    "T39n1792_001:0506b06_12": "一人乘。",
    "T39n1792_001:0506b06_13": "謂三歸五戒。",
    "T39n1792_001:0506b06_14": "運載眾生越於三塗生於人道。",
    "T39n1792_001:0506b07_15": "其猶小艇纔過谿澗。",
    "T39n1792_001:0506b07_16": "二天乘。",
    "T39n1792_001:0506b07_17": "謂上品十善。",
    "T39n1792_001:0506b08_18": "及四禪八定。",
    "T39n1792_001:0506b08_19": "運載眾生越於四洲達於上界。",
    "T39n1792_001:0506b09_20": "猶如小船越小江河三聲聞乘。",
    "T39n1792_001:0506b10_0": "謂四諦法門。",
    "T39n1792_001:0506b10_1": "四緣覺乘。",
    "T39n1792_001:0506b10_2": "謂十二因緣法門。",
    "T39n1792_001:0506b10_3": "皆能運載眾生越於三界。",
    "T39n1792_001:0506b11_4": "到有餘無餘涅槃。",
    "T39n1792_001:0506b11_5": "成阿羅漢及辟支佛。",
    "T39n1792_001:0506b12_6": "皆如大船越大江河。",
    "T39n1792_001:0506b12_7": "五菩薩乘。",
    "T39n1792_001:0506b13_8": "謂悲智六度法門。",
    "T39n1792_001:0506b13_9": "運載眾生總超三界三乘之境。",
    "T39n1792_001:0506b14_10": "至無上菩提大般涅槃之彼岸。",
    "T39n1792_001:0506b14_11": "如乘舶過海也。",
    "T39n1792_001:0506b15_12": "今此經者。",
    "T39n1792_001:0506b15_13": "謂是人天乘所攝。",
    "T39n1792_001:0506b16_0": "在小乘藏中。",
    "T39n1792_001:0506b16_1": "三辨定宗旨。",
    "T39n1792_001:0506b16_2": "三辨定宗旨者。",
    "T39n1792_001:0506b16_3": "此經以孝順設供。",
    "T39n1792_001:0506b17_4": "拔苦報恩為宗。",
    "T39n1792_001:0506b17_5": "今以二門分別。",
    "T39n1792_001:0506b18_6": "一釋行相。",
    "T39n1792_001:0506b18_7": "二配句數。",
    "T39n1792_001:0506b18_8": "初者為目連。",
    "T39n1792_001:0506b18_9": "本為孝誠欲酬恩德。",
    "T39n1792_001:0506b19_10": "力所未及故先出家。",
    "T39n1792_001:0506b19_11": "是以始得六通。",
    "T39n1792_001:0506b20_12": "便觀三界見其亡母生餓鬼中。",
    "T39n1792_001:0506b20_13": "雖餉香飯旋成猛火。",
    "T39n1792_001:0506b21_14": "悲號投佛。",
    "T39n1792_001:0506b21_15": "佛教設於盆供。",
    "T39n1792_001:0506b22_0": "拔冥途身脫一劫苦。",
    "T39n1792_001:0506b22_1": "不辜生育大報劬勞。",
    "T39n1792_001:0506b23_0": "細詳經旨備斯四義。",
    "T39n1792_001:0506b23_1": "二配句數者。",
    "T39n1792_001:0506b23_2": "有四四句。",
    "T39n1792_001:0506b24_0": "一孝順兩字。",
    "T39n1792_001:0506b24_1": "自有四句。",
    "T39n1792_001:0506b24_2": "一孝而非順。",
    "T39n1792_001:0506b24_3": "如三牲之養等。",
    "T39n1792_001:0506b25_4": "二順而非孝。",
    "T39n1792_001:0506b25_5": "如病索禁忌之食而即供。",
    "T39n1792_001:0506b26_6": "欲行非為之事而不諫等。",
    "T39n1792_001:0506b26_7": "三亦孝亦順。",
    "T39n1792_001:0506b26_8": "謂有隱無犯。",
    "T39n1792_001:0506b27_9": "三諫而隨順色。",
    "T39n1792_001:0506b27_10": "觀志三年無改。",
    "T39n1792_001:0506b27_11": "四非孝非順。",
    "T39n1792_001:0506b28_12": "如水中葬父之類。",
    "T39n1792_001:0506b28_13": "二以孝順設供。",
    "T39n1792_001:0506b29_14": "相對復為四句。",
    "T39n1792_001:0506b29_15": "一孝順非設供。",
    "T39n1792_001:0506b29_16": "如董黯王祥等。",
    "T39n1792_001:0506c01_17": "二設供非孝順。",
    "T39n1792_001:0506c01_18": "為己求福而修齋等。",
    "T39n1792_001:0506c01_19": "三俱是。",
    "T39n1792_001:0506c02_20": "即盂蘭盆會。",
    "T39n1792_001:0506c02_21": "四俱非。",
    "T39n1792_001:0506c02_22": "謂逆而慳也。",
    "T39n1792_001:0506c02_23": "三以孝順對拔苦。",
    "T39n1792_001:0506c03_24": "亦為四句。",
    "T39n1792_001:0506c03_25": "一孝順非拔苦。",
    "T39n1792_001:0506c03_26": "謂董永等。",
    "T39n1792_001:0506c04_27": "二拔苦非孝順。",
    "T39n1792_001:0506c04_28": "謂救他人之苦。",
    "T39n1792_001:0506c04_29": "三俱是。",
    "T39n1792_001:0506c05_30": "即蘭盆會。",
    "T39n1792_001:0506c05_31": "四俱非。",
    "T39n1792_001:0506c05_32": "謂逆小之人也。",
    "T39n1792_001:0506c05_33": "四以孝順對報恩亦為四句。",
    "T39n1792_001:0506c06_34": "一孝順非報恩。",
    "T39n1792_001:0506c06_35": "護髮膚不驕危非法不言等。",
    "T39n1792_001:0506c07_36": "二報恩非孝順。",
    "T39n1792_001:0506c07_37": "扶輪報一餐修行報施主等。",
    "T39n1792_001:0506c08_38": "三俱是。",
    "T39n1792_001:0506c08_39": "盂蘭盆會也。",
    "T39n1792_001:0506c09_40": "四俱非。",
    "T39n1792_001:0506c09_41": "謂辜恩逆人。",
    "T39n1792_001:0506c09_42": "今修此一門。",
    "T39n1792_001:0506c09_43": "即圓四行所得功德何可校量。",
    "T39n1792_001:0506c10_44": "實繇境勝心彊徹於神理故也。",
    "T39n1792_001:0506c11_45": "◎佛說盂蘭盆經疏上終"
}