[
    {
        "source_sentence": "觀世音菩薩祕密藏如意輪陀羅",
        "from": "T20n1082_001:0197b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尼神呪經",
        "from": "T20n1082_001:0197b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐于闐三藏實叉難陀譯",
        "from": "T20n1082_001:0197b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "1 除破一切惡業陀羅尼品除破一切惡業陀羅尼品第一如是我聞。",
        "from": "T20n1082_001:0197b27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在伽栗斯山。",
        "from": "T20n1082_001:0197b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與大菩薩眾俱。",
        "from": "T20n1082_001:0197b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀世音菩薩摩訶薩。",
        "from": "T20n1082_001:0197b28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即從座起整衣服。",
        "from": "T20n1082_001:0197b29_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡跪合掌白佛言。",
        "from": "T20n1082_001:0197b29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊我有大陀羅尼法。",
        "from": "T20n1082_001:0197b29_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名摩訶波頭摩栴檀摩尼心輪。",
        "from": "T20n1082_001:0197c01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能於一切事所求皆得成就。",
        "from": "T20n1082_001:0197c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若如來大慈悲許我說者。",
        "from": "T20n1082_001:0197c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當承佛神力。",
        "from": "T20n1082_001:0197c03_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為饒益一切眾生故說。",
        "from": "T20n1082_001:0197c03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T20n1082_001:0197c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此陀羅尼。",
        "from": "T20n1082_001:0197c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有大神力猶如摩尼寶。",
        "from": "T20n1082_001:0197c04_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如如意樹能滿一切願。",
        "from": "T20n1082_001:0197c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊讚觀世音菩薩言。",
        "from": "T20n1082_001:0197c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉汝已慈悲故。",
        "from": "T20n1082_001:0197c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為眾生能如是問。",
        "from": "T20n1082_001:0197c07_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聽汝無障礙。",
        "from": "T20n1082_001:0197c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此陀羅尼。",
        "from": "T20n1082_001:0197c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀世音菩薩既蒙聽許。",
        "from": "T20n1082_001:0197c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即起合掌作禮還本坐處。",
        "from": "T20n1082_001:0197c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦觀眾會具大慈悲。",
        "from": "T20n1082_001:0197c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T20n1082_001:0197c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那上謨曷囉二合怛那二合怛囉二合夜耶一那謨阿唎耶二婆路咭帝攝伐二合囉耶三菩提薩埵跛耶四摩訶薩埵跛耶五摩訶迦盧尼迦耶六怛姪他七唵八斫迦羅伐底栴檀摩尼九摩訶鉢頭迷十嚧嚧底瑟咤十一遮伐囉阿曷囉二合十二舍鳴𤙖泮莎婆二合呵十三已上是身呪。",
        "from": "T20n1082_001:0197c16_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一鉢頭迷二栴檀摩尼三摩訶遮伐囉吽引四已上是心呪。",
        "from": "T20n1082_001:0197c19_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵一伐囉二合哆二鉢頭迷三吽引四爾時觀世音菩薩。",
        "from": "T20n1082_001:0197c21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此如意輪陀羅尼已。",
        "from": "T20n1082_001:0197c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大地六種震動。",
        "from": "T20n1082_001:0197c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天龍夜叉乾闥婆阿修羅迦樓羅緊那羅摩睺羅伽等宮殿悉皆震動。",
        "from": "T20n1082_001:0197c23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王及諸魔眾生大驚怖。",
        "from": "T20n1082_001:0197c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "魔王宮殿皆悉火起。",
        "from": "T20n1082_001:0197c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自餘種類夜叉惡鬼。",
        "from": "T20n1082_001:0197c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並皆惶懼仆面倒地。",
        "from": "T20n1082_001:0197c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切地獄門開。",
        "from": "T20n1082_001:0197c26_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪人解脫受天勝樂。",
        "from": "T20n1082_001:0197c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時天雨寶華及種種寶莊嚴具。",
        "from": "T20n1082_001:0197c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天音樂在虛空中。",
        "from": "T20n1082_001:0197c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出種種聲供養如來。",
        "from": "T20n1082_001:0197c28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊以梵音聲。",
        "from": "T20n1082_001:0197c28_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說偈讚觀世音菩薩摩訶薩言。",
        "from": "T20n1082_001:0197c29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉　　汝善男子　　愍念眾生",
        "from": "T20n1082_001:0198a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說陀羅尼　　能令眾生　　得大勝益",
        "from": "T20n1082_001:0198a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊復告觀世音菩薩言。",
        "from": "T20n1082_001:0198a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善男子能為諸眾生故。",
        "from": "T20n1082_001:0198a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此大神通王陀羅尼法。",
        "from": "T20n1082_001:0198a04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀世音菩薩白佛言。",
        "from": "T20n1082_001:0198a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人比丘比丘尼優婆塞優婆夷童男童女。",
        "from": "T20n1082_001:0198a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於此生中欲求現報。",
        "from": "T20n1082_001:0198a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當於晝夜一心精勤。",
        "from": "T20n1082_001:0198a07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不忘此陀羅尼者。",
        "from": "T20n1082_001:0198a08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不簡擇時日淨與不淨。",
        "from": "T20n1082_001:0198a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦得已即有成驗。",
        "from": "T20n1082_001:0198a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所求事當誦一百八遍。",
        "from": "T20n1082_001:0198a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即百千事成。",
        "from": "T20n1082_001:0198a09_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "更無別有神呪及此如意輪王陀羅尼者。",
        "from": "T20n1082_001:0198a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所以者何。",
        "from": "T20n1082_001:0198a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去現在惡業重障悉能破壞。",
        "from": "T20n1082_001:0198a11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能誦此陀羅尼。",
        "from": "T20n1082_001:0198a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應墮阿鼻地獄即得解脫。",
        "from": "T20n1082_001:0198a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五逆等罪亦悉滅除。",
        "from": "T20n1082_001:0198a13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況其餘惡業。",
        "from": "T20n1082_001:0198a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸厄難一切疾病。",
        "from": "T20n1082_001:0198a14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若熱病一日二日三日四日。",
        "from": "T20n1082_001:0198a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若晝若夜若風黃痰癊等病。",
        "from": "T20n1082_001:0198a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此呪者悉得除愈。",
        "from": "T20n1082_001:0198a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若被蠱毒厭禱丁瘡。",
        "from": "T20n1082_001:0198a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疥癩瘑痒風狂頭痛。",
        "from": "T20n1082_001:0198a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及耳鼻脣舌牙齒咽喉。",
        "from": "T20n1082_001:0198a17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口面頭腦胸脇心腹。",
        "from": "T20n1082_001:0198a17_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腰背脚手頭足等痛悉得除差。",
        "from": "T20n1082_001:0198a18_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但是身中有病皆悉治之。",
        "from": "T20n1082_001:0198a19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夜叉羅剎毘那夜迦。",
        "from": "T20n1082_001:0198a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡魔鬼神悉不能害。",
        "from": "T20n1082_001:0198a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦不畏刀兵水火惡風雨雹怨家劫盜惡王惡賊。",
        "from": "T20n1082_001:0198a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不能害亦不橫死。",
        "from": "T20n1082_001:0198a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸惡夢蚖蛇蝮蠍。",
        "from": "T20n1082_001:0198a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守宮百足蜘蛛諸惡。",
        "from": "T20n1082_001:0198a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毒獸師子虎狼悉不能害。",
        "from": "T20n1082_001:0198a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兵鬪戰陣皆得勝利。",
        "from": "T20n1082_001:0198a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有官事諍訟皆得和解。",
        "from": "T20n1082_001:0198a24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若誦此陀羅尼一遍。",
        "from": "T20n1082_001:0198a24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上等事悉得遂意。",
        "from": "T20n1082_001:0198a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若日日誦此陀羅尼一百八遍。",
        "from": "T20n1082_001:0198a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見觀世音菩薩告言。",
        "from": "T20n1082_001:0198a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝善男子等勿怖。",
        "from": "T20n1082_001:0198a26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲求何願一切施汝。",
        "from": "T20n1082_001:0198a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿彌陀佛自現其身。",
        "from": "T20n1082_001:0198a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見極樂世界莊嚴之事如經中說。",
        "from": "T20n1082_001:0198a28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見極樂世界諸菩薩眾。",
        "from": "T20n1082_001:0198a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見十方一切諸佛。",
        "from": "T20n1082_001:0198a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦見觀世音菩薩所居住處補怛羅山。",
        "from": "T20n1082_001:0198b01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得自身清淨。",
        "from": "T20n1082_001:0198b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常為諸王公卿宰相恭敬供養眾人愛敬。",
        "from": "T20n1082_001:0198b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所生之處不處母胎。",
        "from": "T20n1082_001:0198b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生蓮花上微妙莊嚴。",
        "from": "T20n1082_001:0198b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在所生處常得宿命。",
        "from": "T20n1082_001:0198b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "始從今日乃至成佛。",
        "from": "T20n1082_001:0198b04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "終不墮惡道常生佛前。",
        "from": "T20n1082_001:0198b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "2 一切愛樂法品觀世音菩薩祕密藏一切愛樂法品第二爾時觀世音菩薩憐愍眾生。",
        "from": "T20n1082_001:0198b08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說祕密如意心輪陀羅尼。",
        "from": "T20n1082_001:0198b09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但有所須皆悉自來財有二種。",
        "from": "T20n1082_001:0198b09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者世間財。",
        "from": "T20n1082_001:0198b10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者出世間財。",
        "from": "T20n1082_001:0198b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間財者金銀等寶。",
        "from": "T20n1082_001:0198b11_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出世財者福德智慧具二莊嚴。",
        "from": "T20n1082_001:0198b11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身心悅預眾人愛敬。",
        "from": "T20n1082_001:0198b12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能救一切眾生苦。",
        "from": "T20n1082_001:0198b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈心增長能與智者。",
        "from": "T20n1082_001:0198b13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂具資生利益能加勢力。",
        "from": "T20n1082_001:0198b13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯此祕密藏境界。",
        "from": "T20n1082_001:0198b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不得向餘人說。",
        "from": "T20n1082_001:0198b14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲得此如意輪陀羅尼我最勝驗者。",
        "from": "T20n1082_001:0198b15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至心一切時一切處。",
        "from": "T20n1082_001:0198b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨與不淨常應誦持。",
        "from": "T20n1082_001:0198b16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一無過咎所誦課充。",
        "from": "T20n1082_001:0198b16_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復應稱觀世音菩薩名。",
        "from": "T20n1082_001:0198b17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及如意輪陀羅尼。",
        "from": "T20n1082_001:0198b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并稱彼人名字。",
        "from": "T20n1082_001:0198b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時思念。",
        "from": "T20n1082_001:0198b18_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若王王子妃后公主婆羅門剎利毘舍首陀。",
        "from": "T20n1082_001:0198b19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若男若女童男童女種種外道。",
        "from": "T20n1082_001:0198b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但欲親覲者應稱彼名。",
        "from": "T20n1082_001:0198b20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每至五更使得課充。",
        "from": "T20n1082_001:0198b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求最勝驗者。",
        "from": "T20n1082_001:0198b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或親覲國王於七日中。",
        "from": "T20n1082_001:0198b21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每至五更誦一千八遍即得相見。",
        "from": "T20n1082_001:0198b22_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲見妃后應誦九百遍。",
        "from": "T20n1082_001:0198b23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲見王子誦八百遍。",
        "from": "T20n1082_001:0198b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲見宮人誦七百遍。",
        "from": "T20n1082_001:0198b24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲見公主誦六百遍。",
        "from": "T20n1082_001:0198b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若親覲婆羅門誦五百遍。",
        "from": "T20n1082_001:0198b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若親覲剎利誦四百遍。",
        "from": "T20n1082_001:0198b26_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毘舍誦三百遍。",
        "from": "T20n1082_001:0198b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "比丘比丘尼一百遍。",
        "from": "T20n1082_001:0198b26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "優婆塞優婆夷九十遍。",
        "from": "T20n1082_001:0198b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "童男童女六十遍。",
        "from": "T20n1082_001:0198b27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名親近課法。",
        "from": "T20n1082_001:0198b28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成辦一切事。",
        "from": "T20n1082_001:0198b28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財物奴馬一切樂具有所愛樂者。",
        "from": "T20n1082_001:0198b29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在遠處意所求之如風疾至。",
        "from": "T20n1082_001:0198c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡欲為事但得課充其事即成。",
        "from": "T20n1082_001:0198c01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲見觀世音菩薩。",
        "from": "T20n1082_001:0198c02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一千八遍。",
        "from": "T20n1082_001:0198c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即見其真身一切成滿。",
        "from": "T20n1082_001:0198c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲見金剛應誦一萬遍。",
        "from": "T20n1082_001:0198c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即現其前憐念其人如父愛子。",
        "from": "T20n1082_001:0198c04_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心所願事悉能與之。",
        "from": "T20n1082_001:0198c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲見諸佛及諸大眾。",
        "from": "T20n1082_001:0198c05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦一萬三千遍即見。",
        "from": "T20n1082_001:0198c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若七日七夜相續誦。",
        "from": "T20n1082_001:0198c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所持呪神皆悉現前。",
        "from": "T20n1082_001:0198c06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各各自將已呪功能。",
        "from": "T20n1082_001:0198c07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施與其人常隨擁護。",
        "from": "T20n1082_001:0198c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第七日三千大千世界主。",
        "from": "T20n1082_001:0198c08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及天帝釋。",
        "from": "T20n1082_001:0198c08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸眷屬俱來皆與其願。",
        "from": "T20n1082_001:0198c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能依如前所說誦課法者。",
        "from": "T20n1082_001:0198c09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求之願皆得滿足。",
        "from": "T20n1082_001:0198c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "3 和阿伽陀藥法令人愛樂品觀世音陀羅尼和阿伽陀藥法令人愛樂品第三觀世音菩薩復為憐愍眾生故。",
        "from": "T20n1082_001:0198c13_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說愛樂藥法。",
        "from": "T20n1082_001:0198c13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令人見者生歡喜心。",
        "from": "T20n1082_001:0198c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "和合既了身上帶行。",
        "from": "T20n1082_001:0198c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最勝成就一切皆得遂意　牛黃　白檀　欝金香　龍腦香　射香　豆穀子　丁香　迦俱羅　蓮華　青蓮華　金薄。",
        "from": "T20n1082_001:0198c17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各等分。",
        "from": "T20n1082_001:0198c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白蜜與藥亦等分擣和。",
        "from": "T20n1082_001:0198c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前呪一千八遍。",
        "from": "T20n1082_001:0198c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用香或熏身熏衣。",
        "from": "T20n1082_001:0198c19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或塗眼胞上或點額塗身之時。",
        "from": "T20n1082_001:0198c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若王及夫人太子。",
        "from": "T20n1082_001:0198c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百官宮人男子女人等愛樂。",
        "from": "T20n1082_001:0198c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欽茲道法發菩提心。",
        "from": "T20n1082_001:0198c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身力財物皆悉不惜並能施之為其給使說不可盡。",
        "from": "T20n1082_001:0198c22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如日月一切悉欲樂見。",
        "from": "T20n1082_001:0198c23_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸事皆能成辦。",
        "from": "T20n1082_001:0198c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人帶持此藥罪障消滅。",
        "from": "T20n1082_001:0198c24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切厄難皆得解脫。",
        "from": "T20n1082_001:0198c24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若王勢力強奪。",
        "from": "T20n1082_001:0198c25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水漂火燒種種刀杖諸毒。",
        "from": "T20n1082_001:0198c25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "繫縛煩惱皆得解脫。",
        "from": "T20n1082_001:0198c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯須至心。",
        "from": "T20n1082_001:0198c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然此藥不得輒內口中毒故。",
        "from": "T20n1082_001:0198c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "4 如意輪含藥品觀世音如意輪含藥品第四觀世音菩薩憐愍眾生。",
        "from": "T20n1082_001:0198c29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說口含樂令一切愛樂。",
        "from": "T20n1082_001:0199a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍腦香　射香　欝金香　細擣和牛黃。",
        "from": "T20n1082_001:0199a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以上三呪各誦一千八遍。",
        "from": "T20n1082_001:0199a03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以淨水和之。",
        "from": "T20n1082_001:0199a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作丸如梧桐子大。",
        "from": "T20n1082_001:0199a04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦三呪各一百八遍。",
        "from": "T20n1082_001:0199a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "陰乾莫令風日到。",
        "from": "T20n1082_001:0199a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是一一丸各誦前三呪各七遍。",
        "from": "T20n1082_001:0199a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即著一丸內口中。",
        "from": "T20n1082_001:0199a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若王輔相大眾等類。",
        "from": "T20n1082_001:0199a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "共一人語時即生恭敬。",
        "from": "T20n1082_001:0199a07_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "財寶不惜。",
        "from": "T20n1082_001:0199a07_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但所須者一切人皆與之。",
        "from": "T20n1082_001:0199a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡所說言一切信受。",
        "from": "T20n1082_001:0199a08_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有所願處並悉剋從。",
        "from": "T20n1082_001:0199a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著藥口中時常須誦呪。",
        "from": "T20n1082_001:0199a09_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀世音菩薩即與其願。",
        "from": "T20n1082_001:0199a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以觀世音菩薩像前。",
        "from": "T20n1082_001:0199a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "香水作方壇縱廣四肘。",
        "from": "T20n1082_001:0199a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用種種花置壇中。",
        "from": "T20n1082_001:0199a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "草木花但求可得者。",
        "from": "T20n1082_001:0199a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒白檀香取前丸藥著壇中。",
        "from": "T20n1082_001:0199a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "竪四幢張白幔蓋壇上懸四白幡。",
        "from": "T20n1082_001:0199a13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養觀世音菩薩。",
        "from": "T20n1082_001:0199a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後誦心呪心中心呪各誦一百八遍。",
        "from": "T20n1082_001:0199a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦身呪一百八遍然白栴檀香散花。",
        "from": "T20n1082_001:0199a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時求願一切皆獲。",
        "from": "T20n1082_001:0199a16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取壇中藥帶。",
        "from": "T20n1082_001:0199a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所向之處欲求皆得。",
        "from": "T20n1082_001:0199a16_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有所言說亦悉信受。",
        "from": "T20n1082_001:0199a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切事皆得成就除不至心。",
        "from": "T20n1082_001:0199a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "5 心輪眼藥品觀世音心輪眼藥品第五時觀世音菩薩憐愍眾生故。",
        "from": "T20n1082_001:0199a19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說眼藥法。",
        "from": "T20n1082_001:0199a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令一切人見皆生愛樂歡喜　慢室迦拘竪　紅蓮花　青蓮花　海水末　或烏賊魚末　牛黃　欝金香　漢欝金　畢撥　胡椒　乾薑。",
        "from": "T20n1082_001:0199a23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "並等分擣細篩訖。",
        "from": "T20n1082_001:0199a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前藥有一兩。",
        "from": "T20n1082_001:0199a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即著射香龍腦香半兩細研。",
        "from": "T20n1082_001:0199a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀世音像前和合。",
        "from": "T20n1082_001:0199a25_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其前三呪各誦一千八遍。",
        "from": "T20n1082_001:0199a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一切眾生邊皆起慈悲心。",
        "from": "T20n1082_001:0199a26_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著此藥置觀世音菩薩足下。",
        "from": "T20n1082_001:0199a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後觸著。",
        "from": "T20n1082_001:0199a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即得用銅筋點藥著眼頭。",
        "from": "T20n1082_001:0199a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治眼頭一切病。",
        "from": "T20n1082_001:0199a29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞖障白暈流淚赤膜清盲頭痛。",
        "from": "T20n1082_001:0199b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日一度著此藥置眼中。",
        "from": "T20n1082_001:0199b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眼病皆得除差。",
        "from": "T20n1082_001:0199b02_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二日著治身中一切病。",
        "from": "T20n1082_001:0199b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三日著治八十四種癎。",
        "from": "T20n1082_001:0199b03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四日著內外一切障不能障。",
        "from": "T20n1082_001:0199b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五日著一切怨賊兵甲鬪戰皆得勝利。",
        "from": "T20n1082_001:0199b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六日著一切惡業煩惱。",
        "from": "T20n1082_001:0199b05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四重五逆惡夢蠱道。",
        "from": "T20n1082_001:0199b05_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能破壞終不墮三惡道七日著國王宰相一切大眾。",
        "from": "T20n1082_001:0199b06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆隨順恭敬信受愛樂。",
        "from": "T20n1082_001:0199b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二七日著得大自在。",
        "from": "T20n1082_001:0199b07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三七日著則與國王宰相得相親覲。",
        "from": "T20n1082_001:0199b08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四七日著所有夜叉并諸眷屬為其給使。",
        "from": "T20n1082_001:0199b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五七日著阿修羅諸龍夜叉羅剎皆為給使。",
        "from": "T20n1082_001:0199b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "六七日著有大力。",
        "from": "T20n1082_001:0199b11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飛空羅剎厭魅蠱道。",
        "from": "T20n1082_001:0199b11_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至成佛常隨衛護。",
        "from": "T20n1082_001:0199b12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "七七日著摩訶迦羅神乃至八部神。",
        "from": "T20n1082_001:0199b12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆來隨從為其給使。",
        "from": "T20n1082_001:0199b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八七日著眾人不見。",
        "from": "T20n1082_001:0199b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "九七日著悉見一切伏藏十七日著阿修羅宮門自然開闢。",
        "from": "T20n1082_001:0199b15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宮中所有悉見出入無礙。",
        "from": "T20n1082_001:0199b15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十一七日著所有一切諸藥。",
        "from": "T20n1082_001:0199b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如火狀對治悉皆現前。",
        "from": "T20n1082_001:0199b17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求長命及大力者即得。",
        "from": "T20n1082_001:0199b17_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十二七日著眾山開闢。",
        "from": "T20n1082_001:0199b18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶物出現隨意取用。",
        "from": "T20n1082_001:0199b18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十三七日著龍宮自然開闢寶物出現。",
        "from": "T20n1082_001:0199b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所見者皆無障礙。",
        "from": "T20n1082_001:0199b19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十四七日著欲界諸天宮殿無不開者皆悉得見。",
        "from": "T20n1082_001:0199b21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十五七日著夜黑闇中猶如白日。",
        "from": "T20n1082_001:0199b21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十六七日著地下金地金剛地水輪風輪空輪悉見。",
        "from": "T20n1082_001:0199b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十七七日著四天下所有地獄中眾生悉見。",
        "from": "T20n1082_001:0199b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得見彼力故諸受苦眾生皆得解脫。",
        "from": "T20n1082_001:0199b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十八七日著其人德力如日。",
        "from": "T20n1082_001:0199b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十九七日著見金剛真身諸願皆滿。",
        "from": "T20n1082_001:0199b26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十七日著見大慈悲觀世音一切願皆得滿足。",
        "from": "T20n1082_001:0199b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二十一七日著飛騰虛空。",
        "from": "T20n1082_001:0199b28_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見色界諸天宮殿皆悉開闢。",
        "from": "T20n1082_001:0199b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復見十方諸佛菩薩及佛淨國。",
        "from": "T20n1082_001:0199b29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若一年著得五種淨眼。",
        "from": "T20n1082_001:0199b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能修此法者應當深信此教。",
        "from": "T20n1082_001:0199c01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐愍眾生不得生疑。",
        "from": "T20n1082_001:0199c02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法則難成如上所說。",
        "from": "T20n1082_001:0199c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "6 火唵陀羅尼藥品觀世音火唵陀羅尼藥品第六觀世音菩薩憐愍眾生故。",
        "from": "T20n1082_001:0199c04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說火唵吉祥法。",
        "from": "T20n1082_001:0199c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能成一切事。",
        "from": "T20n1082_001:0199c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能破一切煩惱罪障惡業。",
        "from": "T20n1082_001:0199c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有怨敵皆悉降伏。",
        "from": "T20n1082_001:0199c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微建毘那夜迦瞋心即自歇息不復為害。",
        "from": "T20n1082_001:0199c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾人咸生愛敬。",
        "from": "T20n1082_001:0199c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "穿地作爐辟方一肘。",
        "from": "T20n1082_001:0199c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩梨枝摩練遮白芥子酪蜜酥等分和合。",
        "from": "T20n1082_001:0199c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沈檀香木柴各長十二指橫量指。",
        "from": "T20n1082_001:0199c09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "截之著爐中燒。",
        "from": "T20n1082_001:0199c10_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以手抄取少許藥。",
        "from": "T20n1082_001:0199c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪一遍放火中燒。",
        "from": "T20n1082_001:0199c10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是滿一千八遍。",
        "from": "T20n1082_001:0199c11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能破一切業障壽命長二百二十歲。",
        "from": "T20n1082_001:0199c12_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相續七日能作唵法。",
        "from": "T20n1082_001:0199c12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命一千歲身即清淨。",
        "from": "T20n1082_001:0199c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能二七日作法。",
        "from": "T20n1082_001:0199c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國王太子輔相凡庶歸心恭敬三七日作法三十三天及諸眷屬。",
        "from": "T20n1082_001:0199c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "并日月四天王天。",
        "from": "T20n1082_001:0199c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與其眷屬悉來為作衛護。",
        "from": "T20n1082_001:0199c16_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勒叉金剛與大効驗。",
        "from": "T20n1082_001:0199c16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀世音菩薩滿其大願若國土少雨。",
        "from": "T20n1082_001:0199c17_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白芥子及酥以次呪之三日。",
        "from": "T20n1082_001:0199c17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火中燒即降雨。",
        "from": "T20n1082_001:0199c18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨多不止取此爐中灰呪一百八遍。",
        "from": "T20n1082_001:0199c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向四方上散雨即止若惡雹下暴風卒起。",
        "from": "T20n1082_001:0199c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "還用此灰呪一百八遍。",
        "from": "T20n1082_001:0199c20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "向有雲處遙散即止若常誦此呪力如那羅延。",
        "from": "T20n1082_001:0199c21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捨此身已即生極樂世界。",
        "from": "T20n1082_001:0199c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在所生處常得宿命乃至成佛。",
        "from": "T20n1082_001:0199c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀世音菩薩白佛言。",
        "from": "T20n1082_001:0199c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊此栴檀心輪陀羅尼如我所說。",
        "from": "T20n1082_001:0199c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若比丘比丘尼優婆塞優婆夷若男若女受持者。",
        "from": "T20n1082_001:0199c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必得成就勿懷疑。",
        "from": "T20n1082_001:0199c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心所憶念一切事皆得。",
        "from": "T20n1082_001:0199c27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯須深信不得生疑。",
        "from": "T20n1082_001:0199c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛讚觀世音菩薩言。",
        "from": "T20n1082_001:0199c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉大慈悲觀世音菩薩摩訶薩。",
        "from": "T20n1082_001:0199c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃能說此微妙如意輪陀羅尼法。",
        "from": "T20n1082_001:0200a01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現閻浮提利樂諸眾生等。",
        "from": "T20n1082_001:0200a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若發心口誦即得効驗。",
        "from": "T20n1082_001:0200a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然汝依我教與諸眾生。",
        "from": "T20n1082_001:0200a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數數勤加策勵示誨。",
        "from": "T20n1082_001:0200a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "使得効驗為現其身。",
        "from": "T20n1082_001:0200a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫違我語我當隨喜。",
        "from": "T20n1082_001:0200a04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀世音菩薩白佛言世尊。",
        "from": "T20n1082_001:0200a05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我於無量劫來以慈悲心受寄眾生常作擁護與其効驗。",
        "from": "T20n1082_001:0200a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛自證知為眾生故。",
        "from": "T20n1082_001:0200a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此如意輪陀羅尼。",
        "from": "T20n1082_001:0200a07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有受持常自作課誦者諸願皆得。",
        "from": "T20n1082_001:0200a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我承佛力如是救苦眾生。",
        "from": "T20n1082_001:0200a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時觀世音菩薩摩訶薩。",
        "from": "T20n1082_001:0200a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說此如意輪陀羅尼經已。",
        "from": "T20n1082_001:0200a10_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切大眾皆大歡喜信受奉行。",
        "from": "T20n1082_001:0200a11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀世音祕密藏如意輪陀羅尼神呪經那謨喝囉怛那二合怛囉二合夜耶一那謨阿哩耶二合婆嚧枳帝捨靺亡箇切二合囉耶合曝地陀異切薩怛靺亡箇切二合耶三摩訶薩怛靺同上二合耶四摩訶箇𡀔尼上聲箇耶五怛姪他六嗚吽二合七斫箇囉二合筏底多以切八振多末尼九摩訶播特迷二合十嚕嚕底多以反瑟吒二合十一闍靺亡箇切二合囉十二阿箇哩沙二合耶十三虎河古切泮吒短聲薩靺二合訶已上根本身呪烏吽二合播特摩二合振哆末尼闍靺二囉虎吽二合已上身呪烏吽二合筏囉陀耶播特迷二合虎吽二合已上心中心呪",
        "from": "T20n1082_001:0200a23_100",
        "context_with_next_sentence": false
    }
]