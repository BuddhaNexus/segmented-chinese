[
    {
        "source_sentence": "佛說分別經",
        "from": "T17n0738_001:0541a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西晉月氏國三藏竺法護譯",
        "from": "T17n0738_001:0541a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞如是：一時，佛在舍衛國祇樹給孤獨園，晨",
        "from": "T17n0738_001:0541a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "朝整服，儼然而坐。",
        "from": "T17n0738_001:0541a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛語阿難：",
        "from": "T17n0738_001:0541a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「告諸比丘，皆寂靜明聽，今當為汝說人生受苦。",
        "from": "T17n0738_001:0541a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難從坐起整衣服，為佛作禮，白佛言：",
        "from": "T17n0738_001:0541a23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「願樂欲聞。",
        "from": "T17n0738_001:0541a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541a23_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「人有六惡以自侵欺。",
        "from": "T17n0738_001:0541a24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂為六？",
        "from": "T17n0738_001:0541a24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼為色欺，耳為聲欺，鼻為香欺，口為味欺，身為細滑欺，意墮邪念為邪念欺。",
        "from": "T17n0738_001:0541a26_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為六欺，令人墮惡道中，無有出期，黠人乃諦覺是耳！",
        "from": "T17n0738_001:0541a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「人從三可得三苦。",
        "from": "T17n0738_001:0541a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂三可？",
        "from": "T17n0738_001:0541a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一、身可殺、盜、婬；",
        "from": "T17n0738_001:0541a28_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二、口可兩舌、惡罵、妄言、綺語；",
        "from": "T17n0738_001:0541a29_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三、意可貪、恚、癡。",
        "from": "T17n0738_001:0541a29_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用是三可故，墮地獄、餓鬼、畜生中。",
        "from": "T17n0738_001:0541b01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為三苦，唯黠者覺之。",
        "from": "T17n0738_001:0541b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541b02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「人有六恣，墮十八痛。",
        "from": "T17n0738_001:0541b02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何謂六恣？",
        "from": "T17n0738_001:0541b02_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼恣入色，耳恣入音，鼻恣入香，口恣入味，身恣入細滑，意恣入邪念。",
        "from": "T17n0738_001:0541b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為六恣，亦為受，亦為衰，用是故，墮十八地獄，苦痛長久無有出期。",
        "from": "T17n0738_001:0541b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難白佛言：",
        "from": "T17n0738_001:0541b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「人有事佛受戒，能得脫是苦痛不？",
        "from": "T17n0738_001:0541b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541b07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有人事佛受戒，得福無量，不可譬喻者，有人事佛墮極罪者。",
        "from": "T17n0738_001:0541b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難問佛：",
        "from": "T17n0738_001:0541b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「事佛受佛戒當得福，更得深罪，何以故？",
        "from": "T17n0738_001:0541b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願聞其意。",
        "from": "T17n0738_001:0541b09_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541b10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有人事佛奉持經戒，精進不犯，得福無量，不可譬喻也。",
        "from": "T17n0738_001:0541b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有人事佛受戒不持，不能精進、禪定、思惟，託名事佛，專行邪業，貪求無厭，不知止足；",
        "from": "T17n0738_001:0541b13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "婬妷色欲，好喜歌舞，耽于酒味，以自放恣，雖云事佛，其過難量。",
        "from": "T17n0738_001:0541b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用是之故，長墮三塗，苦痛萬端，難得免出。",
        "from": "T17n0738_001:0541b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541b16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「事佛有三輩：",
        "from": "T17n0738_001:0541b16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一輩者、為魔弟子事佛；",
        "from": "T17n0738_001:0541b16_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二輩、為天人事佛；",
        "from": "T17n0738_001:0541b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三輩、為佛弟子事佛。",
        "from": "T17n0738_001:0541b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「何謂魔弟子事佛？",
        "from": "T17n0738_001:0541b18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541b18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「雖受佛戒，心樂邪業——卜問是祟、解除、禱祀——信有家親丈人，不信正真，不知有罪惡之對，假名事佛，常與邪俱，死墮無擇地獄，受苦長久。",
        "from": "T17n0738_001:0541b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "久乃出，為魔邦屬，諛諂妖㜹，難可得度。",
        "from": "T17n0738_001:0541b22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是曹輩人，宿命餘福，暫得一時見於正道，心意瞢瞢，難曉宿已，當復更入邪見無窮已也。",
        "from": "T17n0738_001:0541b24_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為魔弟子事佛。",
        "from": "T17n0738_001:0541b24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「何謂天人事佛？",
        "from": "T17n0738_001:0541b25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「受持五戒，行於十善，死死不犯；",
        "from": "T17n0738_001:0541b25_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "信有罪福、作是得是，壽終之後，即生天上。",
        "from": "T17n0738_001:0541b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為天人事佛。",
        "from": "T17n0738_001:0541b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「何謂佛弟子事佛？",
        "from": "T17n0738_001:0541b27_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」「奉持正戒，廣學經戒，修治上慧，知三界苦，心不樂著，欲得解脫，行於四等六度；",
        "from": "T17n0738_001:0541b29_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愍傷眾生，欲安濟之；",
        "from": "T17n0738_001:0541c01_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不貪身命，知死有生，求長益福，不為邪業。",
        "from": "T17n0738_001:0541c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為佛弟子事佛。",
        "from": "T17n0738_001:0541c02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吾般泥洹後千歲，魔道當興，時世大惡，國無常主，民無常居；",
        "from": "T17n0738_001:0541c03_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠方之人，當入中國，掠殺殘暴，無有法則。",
        "from": "T17n0738_001:0541c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於斯之際，像法當興盛。",
        "from": "T17n0738_001:0541c05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難問佛：",
        "from": "T17n0738_001:0541c05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何謂像法？",
        "from": "T17n0738_001:0541c05_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541c06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「當來比丘不持正法，挾妻養子，無有慚愧心；",
        "from": "T17n0738_001:0541c07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耕田種殖，以為常業，無復學問、坐禪行者；",
        "from": "T17n0738_001:0541c08_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "好樂俗常，以為綺雅，佯佯相看，上下雷同；",
        "from": "T17n0738_001:0541c09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "撥拂相教度世之基；",
        "from": "T17n0738_001:0541c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迷於色欲，不畏于罪。",
        "from": "T17n0738_001:0541c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時有知法者，為說真言，教示正法，便懷憎嫉，欲毀壞之。",
        "from": "T17n0738_001:0541c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為立言議，抄持長短，誹謗驅踧，使其無憀。",
        "from": "T17n0738_001:0541c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用是之故，大法轉減。",
        "from": "T17n0738_001:0541c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難問佛：",
        "from": "T17n0738_001:0541c13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「於是之時，頗有奉法者不？",
        "from": "T17n0738_001:0541c13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541c13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「多有事佛，亦出家者耳，但不持戒，共相嫉妬；",
        "from": "T17n0738_001:0541c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "識義者少，多不曉解。",
        "from": "T17n0738_001:0541c15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難言：",
        "from": "T17n0738_001:0541c15_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「當爾之時，何國最惡，不信行者？",
        "from": "T17n0738_001:0541c16_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541c16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「真丹之土當有千比丘，共在大國，墮魔邦界。",
        "from": "T17n0738_001:0541c17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其中黠者，若一若兩，為佛弟子耳。",
        "from": "T17n0738_001:0541c18_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生六天上者，亦復少少；",
        "from": "T17n0738_001:0541c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在魔邦者，甚多甚多。",
        "from": "T17n0738_001:0541c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0541c19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吾般泥洹後，亦多有外學來求吾道，度者當隱括，審悉三月，知其志能習清淨行，虛寂少欲，不為污行，便可受之。",
        "from": "T17n0738_001:0541c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先授十善，滿三年已，服習道意，惡事不犯，乃為更受二百四十戒。",
        "from": "T17n0738_001:0541c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其為威儀之事，精進守行，皆向解脫，是彌勒所當建也，當從得度，以為應道。",
        "from": "T17n0738_001:0541c25_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難問佛：",
        "from": "T17n0738_001:0541c25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如佛所說，我皆頂受，宣語後人，令佛之弘法不為斷絕。",
        "from": "T17n0738_001:0541c26_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言阿難：",
        "from": "T17n0738_001:0541c26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「汝前後所受皆以貫心，我亦知汝有信護於佛法也。",
        "from": "T17n0738_001:0541c27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難問佛：",
        "from": "T17n0738_001:0541c28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「後若有人信樂應法，至心欲求，斷世違俗以從正道。",
        "from": "T17n0738_001:0541c29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若時無明師傳教誡者，若有一人書寫戒律授與之，便可得度為道者不？",
        "from": "T17n0738_001:0542a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言阿難：",
        "from": "T17n0738_001:0542a02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「皆當得。",
        "from": "T17n0738_001:0542a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知禁法者，爾乃可授戒耳，不可以文字受便為應法。",
        "from": "T17n0738_001:0542a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T17n0738_001:0542a03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛為天上、天下之大智，天上、天下之大度，天上、天下之大明，不可妄傳失旨，皆當明於戒法禁律，事事委練，乃為相授耳。",
        "from": "T17n0738_001:0542a06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不明法戒禁要之事，而妄授人戒法，違佛誠信，反用為是，大罪不小也。",
        "from": "T17n0738_001:0542a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜以審諦。",
        "from": "T17n0738_001:0542a08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難白佛言：",
        "from": "T17n0738_001:0542a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「後末之世，若有人至心至意，厭於苦痛，欲求度脫，世無有佛，當以何濟其來意？",
        "from": "T17n0738_001:0542a10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言阿難：",
        "from": "T17n0738_001:0542a10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「當將詣彼明戒法者，曉習威儀禁要之事，如是應度，度亦得度。",
        "from": "T17n0738_001:0542a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自不明而復授彼，兩迷失道，渾沌無窮竟已，何從得度脫耶？",
        "from": "T17n0738_001:0542a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0542a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「當來有比丘不能自淨，畜妻養子，身行污濁，貪求供養，不信罪福，而望安樂，難得免脫，甚亦可傷。",
        "from": "T17n0738_001:0542a15_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難白佛言：",
        "from": "T17n0738_001:0542a16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「如是後世，其有從道被服，皆是佛威神，其人以得像於正真因緣，當從得脫。",
        "from": "T17n0738_001:0542a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何緣中復不信、違佛明教，當復更若干無數劫受苦痛耶？",
        "from": "T17n0738_001:0542a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言阿難：",
        "from": "T17n0738_001:0542a19_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是皆前世無數劫，墮久苦之中，其人於苦痛之地，自悔責，願得為善，當從得脫。",
        "from": "T17n0738_001:0542a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣一時自悔之福輒得福，隨來生末世，為人暫覩佛經；",
        "from": "T17n0738_001:0542a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又能除剔頭髮，以為比丘。",
        "from": "T17n0738_001:0542a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本識未械，心意猶豫，瞢瞢不了，故有污濁，多不能離俗，不遇明慧。",
        "from": "T17n0738_001:0542a24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是當後，更墮極苦之中，受無數劫罪。",
        "from": "T17n0738_001:0542a25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0542a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「諸比丘！",
        "from": "T17n0738_001:0542a25_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝以出家，捨妻子，棄世行，作沙門，當修戒行，如羅漢法，寧以洋銅灌口中，下過焦爛腹腸，終不無德食人信施；",
        "from": "T17n0738_001:0542a28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寧以利刀截手、支解身體，不以無德受人信施。",
        "from": "T17n0738_001:0542a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人無德力受人信施，當累劫墮於罪苦，久久得出，用餘𥼘末之福，得為人身，當復更還一一償之——有作奴婢償者，有作兒子償者，有作父母償者。",
        "from": "T17n0738_001:0542b03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」阿難問佛：",
        "from": "T17n0738_001:0542b03_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何謂償債？",
        "from": "T17n0738_001:0542b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0542b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「有作奴婢，大家撾打不以道理，奴婢受之無有怨心；",
        "from": "T17n0738_001:0542b05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤力作務，不憚勞疲；",
        "from": "T17n0738_001:0542b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愛惜大家之物，不敢放散：",
        "from": "T17n0738_001:0542b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是為現世償債奴婢也。",
        "from": "T17n0738_001:0542b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宿命先世，受人信施，不行功德，罪畢來償，猶有本識，故無怨恚，甘受而已。",
        "from": "T17n0738_001:0542b08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何謂償債兒子？",
        "from": "T17n0738_001:0542b09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兒子致財，父母散用無有限度，兒子心亦無惜意，是為償債兒子。",
        "from": "T17n0738_001:0542b10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「何謂償債父母？",
        "from": "T17n0738_001:0542b10_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母致財，兒主散用，父母不為愛惜，恣所當得，皆是宿識因緣相償，故無惜心。",
        "from": "T17n0738_001:0542b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸此償債，因緣合會，對訖更散，亦無常住。",
        "from": "T17n0738_001:0542b13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明者覺之，故不為也。",
        "from": "T17n0738_001:0542b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯有道德，可以久保。",
        "from": "T17n0738_001:0542b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吾前世時，亦更為人償債奴婢、兒子、父母，不可稱數，皆有一時之緣，難可免脫。",
        "from": "T17n0738_001:0542b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至今得道，現我父母皆先世道德之緣，不由償債。",
        "from": "T17n0738_001:0542b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母世世放捨，使我學道，累劫精進，今成得佛，皆是父母之恩。",
        "from": "T17n0738_001:0542b19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人欲學道，不可不精進、孝順，二墮失人種，累劫不復。",
        "from": "T17n0738_001:0542b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五末之世，持宜順行，遭值經道，不可不勤；",
        "from": "T17n0738_001:0542b21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遭值佛世，不可不諦受著心；",
        "from": "T17n0738_001:0542b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遭值明人，不可不勤問奉受。",
        "from": "T17n0738_001:0542b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T17n0738_001:0542b22_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人身難有，六情難具，才聰難得，佛難得見，經難得聞，故宜勤之。",
        "from": "T17n0738_001:0542b24_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T17n0738_001:0542b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「吾般泥洹後，當有五逆惡世，當斯之時，真丹土域魔事當盛，閉塞正道。",
        "from": "T17n0738_001:0542b25_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖有經法，少有學者；",
        "from": "T17n0738_001:0542b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設有學者，少有行者。",
        "from": "T17n0738_001:0542b26_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世有比丘，少能自守清淨，多有污濁習俗之行，高望遊步，世人無異；",
        "from": "T17n0738_001:0542b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求好衣服，學世辯辭，追世禮費，群黨相隨，以快心意求世名譽；",
        "from": "T17n0738_001:0542b29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "教人入法，度為弟子，不教護魔，不依正道；",
        "from": "T17n0738_001:0542c01_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "度世之業，亦不學問，追求明智；",
        "from": "T17n0738_001:0542c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自謂德大，不守根門；",
        "from": "T17n0738_001:0542c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖得為人，假時而已，自謂長久，不知大對，當後受苦無窮竟已，顛倒翻覆，在魔部眾，一何痛哉！",
        "from": "T17n0738_001:0542c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸比丘！",
        "from": "T17n0738_001:0542c05_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得人身，六情完具，覩佛經戒，勤行當行誦之。",
        "from": "T17n0738_001:0542c06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一失人本，難有復時。",
        "from": "T17n0738_001:0542c06_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛世難值，經法難聞，宜各思惟。",
        "from": "T17n0738_001:0542c07_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛說經竟，諸比丘皆儼然坐，自思惟即得羅漢。",
        "from": "T17n0738_001:0542c08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說分別經",
        "from": "T17n0738_001:0542c09_100",
        "context_with_next_sentence": false
    }
]