{
    "X19n0347_002:0552b12_0": "維摩詰所說經卷二",
    "X19n0347_002:0552b13_0": "方便品",
    "X19n0347_002:0552b14_0": "爾時毗耶離大城中。",
    "X19n0347_002:0552b14_1": "有長者名維摩詰。",
    "X19n0347_002:0552b14_2": "已曾供養無量諸佛。",
    "X19n0347_002:0552b15_3": "深植善本。",
    "X19n0347_002:0552b15_4": "得無生忍。",
    "X19n0347_002:0552b15_5": "辯才無礙。",
    "X19n0347_002:0552b15_6": "遊戲神通。",
    "X19n0347_002:0552b16_7": "逮諸總持。",
    "X19n0347_002:0552b16_8": "獲無所畏。",
    "X19n0347_002:0552b16_9": "降魔勞怨。",
    "X19n0347_002:0552b16_10": "入深法門。",
    "X19n0347_002:0552b17_11": "善於智度。",
    "X19n0347_002:0552b17_12": "通達方便。",
    "X19n0347_002:0552b17_13": "大願成就。",
    "X19n0347_002:0552b17_14": "明了眾生心之所趣。",
    "X19n0347_002:0552b18_15": "又能分別諸根利鈍。",
    "X19n0347_002:0552b18_16": "久於佛道。",
    "X19n0347_002:0552b18_17": "心已純淑。",
    "X19n0347_002:0552b19_18": "決定大乘。",
    "X19n0347_002:0552b19_19": "諸有所作。",
    "X19n0347_002:0552b19_20": "能善思量。",
    "X19n0347_002:0552b19_21": "住佛威儀。",
    "X19n0347_002:0552b19_22": "心大如海。",
    "X19n0347_002:0552b20_23": "諸佛咨嗟。",
    "X19n0347_002:0552b20_24": "弟子釋梵世主所敬。",
    "X19n0347_002:0552b20_25": "欲度人故。",
    "X19n0347_002:0552b21_26": "以善方便。",
    "X19n0347_002:0552b21_27": "居毗耶離。",
    "X19n0347_002:0552b21_28": "資財無量。",
    "X19n0347_002:0552b21_29": "攝諸貧民。",
    "X19n0347_002:0552b21_30": "奉戒清淨。",
    "X19n0347_002:0552b22_31": "攝諸毀禁。",
    "X19n0347_002:0552b22_32": "以忍調行。",
    "X19n0347_002:0552b22_33": "攝諸恚怒。",
    "X19n0347_002:0552b22_34": "以大精進。",
    "X19n0347_002:0552b23_35": "攝諸懈怠。",
    "X19n0347_002:0552b23_36": "一心禪寂。",
    "X19n0347_002:0552b23_37": "攝諸亂意。",
    "X19n0347_002:0552b23_38": "以決定慧。",
    "X19n0347_002:0552b23_39": "攝諸無智。",
    "X19n0347_002:0552b24_40": "雖為白衣。",
    "X19n0347_002:0552b24_41": "奉持沙門清淨律行。",
    "X19n0347_002:0552b24_42": "雖處居家。",
    "X19n0347_002:0552c01_43": "不著三界。",
    "X19n0347_002:0552c01_44": "示有妻子。",
    "X19n0347_002:0552c01_45": "常修梵行。",
    "X19n0347_002:0552c01_46": "現有眷屬。",
    "X19n0347_002:0552c01_47": "常樂遠離。",
    "X19n0347_002:0552c02_48": "雖服寶飾。",
    "X19n0347_002:0552c02_49": "而以相好嚴身。",
    "X19n0347_002:0552c02_50": "雖復飲食。",
    "X19n0347_002:0552c02_51": "而以禪悅為味。",
    "X19n0347_002:0552c03_52": "若至博奕戲處。",
    "X19n0347_002:0552c03_53": "輙以度人。",
    "X19n0347_002:0552c03_54": "受諸異道。",
    "X19n0347_002:0552c04_55": "不毀正信。",
    "X19n0347_002:0552c04_56": "雖明世典。",
    "X19n0347_002:0552c04_57": "常樂佛法。",
    "X19n0347_002:0552c04_58": "一切見敬。",
    "X19n0347_002:0552c04_59": "為供養中最。",
    "X19n0347_002:0552c05_60": "執持正法。",
    "X19n0347_002:0552c05_61": "攝諸長幼。",
    "X19n0347_002:0552c05_62": "一切治生諧偶。",
    "X19n0347_002:0552c06_0": "雖獲俗利。",
    "X19n0347_002:0552c06_1": "不以喜悅。",
    "X19n0347_002:0552c06_2": "遊諸四衢。",
    "X19n0347_002:0552c06_3": "饒益眾生。",
    "X19n0347_002:0552c06_4": "入治正法。",
    "X19n0347_002:0552c07_5": "救護一切。",
    "X19n0347_002:0552c07_6": "入講論處。",
    "X19n0347_002:0552c07_7": "導以大乘。",
    "X19n0347_002:0552c07_8": "入諸學堂。",
    "X19n0347_002:0552c08_0": "誘開童蒙。",
    "X19n0347_002:0552c08_1": "入諸婬舍。",
    "X19n0347_002:0552c08_2": "示欲之過。",
    "X19n0347_002:0552c08_3": "入諸酒肆。",
    "X19n0347_002:0552c08_4": "能立其志。",
    "X19n0347_002:0552c09_5": "若在長者。",
    "X19n0347_002:0552c09_6": "長者中尊。",
    "X19n0347_002:0552c09_7": "為說勝法。",
    "X19n0347_002:0552c09_8": "若在居士。",
    "X19n0347_002:0552c10_0": "居士中尊。",
    "X19n0347_002:0552c10_1": "斷其貪著。",
    "X19n0347_002:0552c10_2": "若在剎利。",
    "X19n0347_002:0552c10_3": "剎利中尊。",
    "X19n0347_002:0552c10_4": "教以忍辱。",
    "X19n0347_002:0552c11_5": "若在婆羅門。",
    "X19n0347_002:0552c11_6": "婆羅門中尊。",
    "X19n0347_002:0552c11_7": "除其我慢。",
    "X19n0347_002:0552c11_8": "若在大臣。",
    "X19n0347_002:0552c12_9": "大臣中尊。",
    "X19n0347_002:0552c12_10": "教以正法。",
    "X19n0347_002:0552c12_11": "若在王子。",
    "X19n0347_002:0552c12_12": "王子中尊。",
    "X19n0347_002:0553a01_0": "示以忠孝。",
    "X19n0347_002:0553a01_1": "若在內官。",
    "X19n0347_002:0553a01_2": "內官中尊。",
    "X19n0347_002:0553a01_3": "化正宮女。",
    "X19n0347_002:0553a01_4": "若在庶民。",
    "X19n0347_002:0553a02_5": "庶民中尊。",
    "X19n0347_002:0553a02_6": "令興福力。",
    "X19n0347_002:0553a02_7": "若在梵天。",
    "X19n0347_002:0553a02_8": "梵天中尊。",
    "X19n0347_002:0553a03_0": "誨以勝慧。",
    "X19n0347_002:0553a03_1": "若在帝釋。",
    "X19n0347_002:0553a03_2": "帝釋中尊。",
    "X19n0347_002:0553a03_3": "示現無常。",
    "X19n0347_002:0553a03_4": "若在護世。",
    "X19n0347_002:0553a04_5": "護世中尊。",
    "X19n0347_002:0553a04_6": "護諸眾生長者維摩詰以如是等無量方便。",
    "X19n0347_002:0553a05_7": "饒益眾生。",
    "X19n0347_002:0553a05_8": "其以方便現身有疾(過現疾處血脉聯貫)。",
    "X19n0347_002:0553a05_9": "以其疾故。",
    "X19n0347_002:0553a06_10": "國王大臣。",
    "X19n0347_002:0553a06_11": "長者居士。",
    "X19n0347_002:0553a06_12": "婆羅門等。",
    "X19n0347_002:0553a06_13": "及諸王子。",
    "X19n0347_002:0553a07_14": "并餘官屬。",
    "X19n0347_002:0553a07_15": "無數千人。",
    "X19n0347_002:0553a07_16": "皆往問疾。",
    "X19n0347_002:0553a07_17": "其往者。",
    "X19n0347_002:0553a07_18": "維摩詰。",
    "X19n0347_002:0553a08_19": "因以身疾。",
    "X19n0347_002:0553a08_20": "廣為說法。",
    "X19n0347_002:0553a08_21": "諸仁者。",
    "X19n0347_002:0553a08_22": "是身無常。",
    "X19n0347_002:0553a08_23": "無強。",
    "X19n0347_002:0553a09_0": "無力。",
    "X19n0347_002:0553a09_1": "無堅。",
    "X19n0347_002:0553a09_2": "速朽之法。",
    "X19n0347_002:0553a09_3": "不可信也。",
    "X19n0347_002:0553a09_4": "為苦為惱。",
    "X19n0347_002:0553a09_5": "眾病所集。",
    "X19n0347_002:0553a10_6": "諸仁者。",
    "X19n0347_002:0553a10_7": "如此身。",
    "X19n0347_002:0553a10_8": "明智者所不怙。",
    "X19n0347_002:0553a10_9": "是身如聚沫。",
    "X19n0347_002:0553a11_10": "不可撮摩。",
    "X19n0347_002:0553a11_11": "是身如泡。",
    "X19n0347_002:0553a11_12": "不得久立。",
    "X19n0347_002:0553a11_13": "是身如焰。",
    "X19n0347_002:0553a11_14": "從渴愛生。",
    "X19n0347_002:0553a12_15": "是身如芭蕉。",
    "X19n0347_002:0553a12_16": "中無有堅。",
    "X19n0347_002:0553a12_17": "是身如幻。",
    "X19n0347_002:0553a12_18": "從顛倒起。",
    "X19n0347_002:0553a13_19": "是身如夢。",
    "X19n0347_002:0553a13_20": "為虗妄見。",
    "X19n0347_002:0553a13_21": "是身如影。",
    "X19n0347_002:0553a13_22": "從業緣現。",
    "X19n0347_002:0553a14_0": "是身如響。",
    "X19n0347_002:0553a14_1": "屬諸因緣。",
    "X19n0347_002:0553a14_2": "是身如浮雲。",
    "X19n0347_002:0553a14_3": "須臾變滅。",
    "X19n0347_002:0553a14_4": "是身如電。",
    "X19n0347_002:0553a15_5": "念念不住。",
    "X19n0347_002:0553a15_6": "是身無主為如地。",
    "X19n0347_002:0553a15_7": "是身無我為如火。",
    "X19n0347_002:0553a16_8": "是身無壽為如風。",
    "X19n0347_002:0553a16_9": "是身無人為如水。",
    "X19n0347_002:0553a16_10": "是身不實。",
    "X19n0347_002:0553a17_11": "四大為家。",
    "X19n0347_002:0553a17_12": "是身為空。",
    "X19n0347_002:0553a17_13": "離我我所。",
    "X19n0347_002:0553a17_14": "是身無知。",
    "X19n0347_002:0553a18_15": "如草木瓦礫。",
    "X19n0347_002:0553a18_16": "是身無作。",
    "X19n0347_002:0553a18_17": "風力所轉。",
    "X19n0347_002:0553a18_18": "是身不淨。",
    "X19n0347_002:0553a19_0": "穢惡充滿。",
    "X19n0347_002:0553a19_1": "是身為虗偽。",
    "X19n0347_002:0553a19_2": "雖假以澡浴衣食。",
    "X19n0347_002:0553a19_3": "必歸磨滅。",
    "X19n0347_002:0553a20_4": "是身為灾。",
    "X19n0347_002:0553a20_5": "百一病惱。",
    "X19n0347_002:0553a20_6": "是身如丘井。",
    "X19n0347_002:0553a20_7": "為老所逼。",
    "X19n0347_002:0553a21_8": "是身無定。",
    "X19n0347_002:0553a21_9": "為要當死。",
    "X19n0347_002:0553a21_10": "是身如毒蛇。",
    "X19n0347_002:0553a21_11": "如怨賊。",
    "X19n0347_002:0553a21_12": "如空聚。",
    "X19n0347_002:0553a22_13": "陰界諸入。",
    "X19n0347_002:0553a22_14": "所共合成。",
    "X19n0347_002:0553a22_15": "諸仁者。",
    "X19n0347_002:0553a22_16": "此可患厭。",
    "X19n0347_002:0553a22_17": "當樂佛身。",
    "X19n0347_002:0553a23_18": "所以者何。",
    "X19n0347_002:0553a23_19": "佛身者。",
    "X19n0347_002:0553a23_20": "即法身也。",
    "X19n0347_002:0553a23_21": "從無量功德智慧生。",
    "X19n0347_002:0553a24_22": "從戒定慧解脫解脫知見生。",
    "X19n0347_002:0553a24_23": "從慈悲喜捨生。",
    "X19n0347_002:0553b01_24": "從布施持戒忍辱柔和勤行精進禪定解脫三昧。",
    "X19n0347_002:0553b02_25": "多聞智慧。",
    "X19n0347_002:0553b02_26": "諸波羅蜜生(到彼岸也)。",
    "X19n0347_002:0553b02_27": "從方便生。",
    "X19n0347_002:0553b02_28": "從六通生。",
    "X19n0347_002:0553b03_29": "從三明生。",
    "X19n0347_002:0553b03_30": "從三十七道品生。",
    "X19n0347_002:0553b03_31": "從止觀生。",
    "X19n0347_002:0553b04_0": "從十力四無所畏十八不共法生。",
    "X19n0347_002:0553b04_1": "從斷一切不善法。",
    "X19n0347_002:0553b05_2": "集一切善法生。",
    "X19n0347_002:0553b05_3": "從真實生。",
    "X19n0347_002:0553b05_4": "從不放逸生。",
    "X19n0347_002:0553b05_5": "從如是無量清淨法生如來身。",
    "X19n0347_002:0553b06_6": "諸仁者。",
    "X19n0347_002:0553b06_7": "欲得佛身斷一切眾生病者。",
    "X19n0347_002:0553b07_8": "當發阿耨多羅三藐三菩提心。",
    "X19n0347_002:0553b08_9": "如是。",
    "X19n0347_002:0553b08_10": "長者維摩詰。",
    "X19n0347_002:0553b08_11": "為諸問疾者。",
    "X19n0347_002:0553b08_12": "如應說法。",
    "X19n0347_002:0553b08_13": "令"
}