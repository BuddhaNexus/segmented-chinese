[
    {
        "source_sentence": "傳法寶紀并序",
        "from": "T85n2838_001:1291a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "京兆　□朏字方明撰",
        "from": "T85n2838_001:1291a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首善知識　　能令護本心　　猶如濁水中",
        "from": "T85n2838_001:1291a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠力頓清現　　所以令修紀　　明此遞傳法",
        "from": "T85n2838_001:1291a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願當盡未來　　廣開佛知見",
        "from": "T85n2838_001:1291a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "序曰。",
        "from": "T85n2838_001:1291a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我真實法身法佛所得。",
        "from": "T85n2838_001:1291a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離諸化佛言說傳乎文字者。",
        "from": "T85n2838_001:1291a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則此真如門乃以證心自覺而相傳耳。",
        "from": "T85n2838_001:1291a11_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故論云。",
        "from": "T85n2838_001:1291a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切法從本已來離言說相。",
        "from": "T85n2838_001:1291a12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離名字相。",
        "from": "T85n2838_001:1291a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離心緣相。",
        "from": "T85n2838_001:1291a12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "畢竟平等。",
        "from": "T85n2838_001:1291a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無有變異。",
        "from": "T85n2838_001:1291a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可破壞。",
        "from": "T85n2838_001:1291a13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯是一心故名真如。",
        "from": "T85n2838_001:1291a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又曰。",
        "from": "T85n2838_001:1291a13_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證發心者。",
        "from": "T85n2838_001:1291a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從淨心地乃至究竟。",
        "from": "T85n2838_001:1291a14_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證何境界。",
        "from": "T85n2838_001:1291a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂真如以依轉識說為境界。",
        "from": "T85n2838_001:1291a15_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而此證者無有境界。",
        "from": "T85n2838_001:1291a15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯真如智名為法身。",
        "from": "T85n2838_001:1291a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又如修多羅說。",
        "from": "T85n2838_001:1291a16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩摩訶薩獨一靜處自覺觀察不由於他。",
        "from": "T85n2838_001:1291a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "離見妄想上上昇進入如來地。",
        "from": "T85n2838_001:1291a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名自覺聖智。",
        "from": "T85n2838_001:1291a18_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故若非得無上乘傳乎心地。",
        "from": "T85n2838_001:1291a19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其孰能入真境界者哉。",
        "from": "T85n2838_001:1291a20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "昔廬山遠上人禪經序云。",
        "from": "T85n2838_001:1291a20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛付阿難。",
        "from": "T85n2838_001:1291a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "阿難傳末田地。",
        "from": "T85n2838_001:1291a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "末田地傳舍那婆斯。",
        "from": "T85n2838_001:1291a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則知耳後不墜於地存乎其人至矣。",
        "from": "T85n2838_001:1291a22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "豈夫繫執因果探研句義。",
        "from": "T85n2838_001:1291a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有所能入乎。",
        "from": "T85n2838_001:1291a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則修多羅所謂宗通者。",
        "from": "T85n2838_001:1291a23_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宗通謂緣自得勝道。",
        "from": "T85n2838_001:1291a24_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離言說文字妄想。",
        "from": "T85n2838_001:1291a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "趣無漏界自覺地。",
        "from": "T85n2838_001:1291a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自相遠離一切虛妄覺相。",
        "from": "T85n2838_001:1291a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏一切外道眾魔。",
        "from": "T85n2838_001:1291a26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緣自覺趣光明暉發。",
        "from": "T85n2838_001:1291a26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名宗通相。",
        "from": "T85n2838_001:1291a27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是真極之地。",
        "from": "T85n2838_001:1291a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "非義說所入信矣。",
        "from": "T85n2838_001:1291a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有發迹天竺來道此土者。",
        "from": "T85n2838_001:1291a28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有菩提達摩歟。",
        "from": "T85n2838_001:1291a28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時為震旦有勝惠者而傳。",
        "from": "T85n2838_001:1291a29_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然指真境乎。",
        "from": "T85n2838_001:1291a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼弱喪頓使返躬乎。",
        "from": "T85n2838_001:1291b01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如暗室發大明炬□□可得而言已。",
        "from": "T85n2838_001:1291b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而味性有殊高拔。",
        "from": "T85n2838_001:1291b02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或少翫所先習無求勝智。",
        "from": "T85n2838_001:1291b03_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "翻然頂授蓋為鮮矣。",
        "from": "T85n2838_001:1291b03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯東魏惠可以身命求之大師傳之而去。",
        "from": "T85n2838_001:1291b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惠可傳僧璨。",
        "from": "T85n2838_001:1291b04_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僧璨傳道信。",
        "from": "T85n2838_001:1291b05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道信傳弘忍。",
        "from": "T85n2838_001:1291b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "弘忍傳法如。",
        "from": "T85n2838_001:1291b05_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法如及乎大通。",
        "from": "T85n2838_001:1291b06_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自達摩之後師資開道。",
        "from": "T85n2838_001:1291b06_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆善以方便取證於心。",
        "from": "T85n2838_001:1291b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨所發言略無繫說。",
        "from": "T85n2838_001:1291b07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今人間或有文字稱達摩論者。",
        "from": "T85n2838_001:1291b08_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋是當時學人隨自得語以為真論書而寶之。",
        "from": "T85n2838_001:1291b09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦多謬也。",
        "from": "T85n2838_001:1291b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若夫超悟相承者。",
        "from": "T85n2838_001:1291b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既得之於心則無所容聲矣。",
        "from": "T85n2838_001:1291b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何言語文字措其間哉。",
        "from": "T85n2838_001:1291b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夫不見至極者。",
        "from": "T85n2838_001:1291b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "宜指小以明大假。",
        "from": "T85n2838_001:1291b11_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若世法有練真丹以白日昇天者。",
        "from": "T85n2838_001:1291b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "必須得仙人身手傳練真丹乃成。",
        "from": "T85n2838_001:1291b13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若依碧字瓊書終潰浪茫矣。",
        "from": "T85n2838_001:1291b14_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此世中一有為耳猶在必然。",
        "from": "T85n2838_001:1291b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "況無上真宗豈繫言說。",
        "from": "T85n2838_001:1291b15_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故斯道微密罕得其門。",
        "from": "T85n2838_001:1291b15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖法不依人依義不依語。",
        "from": "T85n2838_001:1291b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而真善知識何可觀止。",
        "from": "T85n2838_001:1291b16_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今此至人無引未易能名將以後之發蒙或因景暮。",
        "from": "T85n2838_001:1291b18_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故今修略紀。",
        "from": "T85n2838_001:1291b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自達摩後相承傳法者。",
        "from": "T85n2838_001:1291b18_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "著之於次以為傳寶紀一卷。",
        "from": "T85n2838_001:1291b19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "維當綴其所見名迹所化方處耳目所取書紀有明者。",
        "from": "T85n2838_001:1291b20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既而與為泯合而傳記自簡。",
        "from": "T85n2838_001:1291b21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至於覺證聖趣靡得㼼言也。",
        "from": "T85n2838_001:1291b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "之列有貌圖將為後記。",
        "from": "T85n2838_001:1291b22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然相承茲道澹乎。",
        "from": "T85n2838_001:1291b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界真空寂處相迹自消。",
        "from": "T85n2838_001:1291b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡在生平不現其異。",
        "from": "T85n2838_001:1291b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "靡聞靈迹以故略諸。",
        "from": "T85n2838_001:1291b24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦猶反袂拭面光濡不取矣。",
        "from": "T85n2838_001:1291b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又自達摩之後至于隋唐。",
        "from": "T85n2838_001:1291b25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有高悟玄拔深至圓頓者。",
        "from": "T85n2838_001:1291b26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦可何世無之。",
        "from": "T85n2838_001:1291b26_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已非相傳授故別條列傳。",
        "from": "T85n2838_001:1291b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則照此法門之多主也。",
        "from": "T85n2838_001:1291b27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "東魏嵩山少林寺釋菩提達摩北齊嵩山少林寺釋惠可隨𡷗公山釋僧璨唐雙峯山東山寺釋道信唐雙峯山東山寺釋弘忍唐嵩山少林寺釋法如唐當陽王泉寺釋神秀□□□達摩大婆羅門種南天竺國王第三子機神超晤傳□□□自覺聖智。",
        "from": "T85n2838_001:1291c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣為人天開佛知見。",
        "from": "T85n2838_001:1291c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為我震旦國人故船海□□高山時罕有知者。",
        "from": "T85n2838_001:1291c09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯道昱慧可宿心潛會精竭求之。",
        "from": "T85n2838_001:1291c09_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師□六年志取通晤。",
        "from": "T85n2838_001:1291c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大師當從容謂曰。",
        "from": "T85n2838_001:1291c10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾能為法捨身命不。",
        "from": "T85n2838_001:1291c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惠可斷其臂以驗誠懇案餘傳云。",
        "from": "T85n2838_001:1291c11_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "被賊斫臂盖是一時謬傳耳自後始密以方便開發。",
        "from": "T85n2838_001:1291c12_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便開發皆師資。",
        "from": "T85n2838_001:1291c13_1",
        "context_with_next_sentence": true
    }
]