[
    {
        "source_sentence": "金剛頂瑜伽他化自在天理趣會",
        "from": "T20n1122_001:0523c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普賢修行念誦儀軌",
        "from": "T20n1122_001:0523c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唐特進試鴻臚卿三藏沙門",
        "from": "T20n1122_001:0523c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我以淨三業　　為利諸眾生",
        "from": "T20n1122_001:0523c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得三身故　　歸命禮三寶",
        "from": "T20n1122_001:0523c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛身語意　　遍滿生死中",
        "from": "T20n1122_001:0523c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密金剛界　　大悲依護者",
        "from": "T20n1122_001:0523c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雄猛阿閦鞞　　最勝寶生尊",
        "from": "T20n1122_001:0523c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大悲阿彌陀　　成就不空業",
        "from": "T20n1122_001:0523c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此諸無上尊　　我皆稽首禮",
        "from": "T20n1122_001:0523c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及薩埵金剛　　降伏於一切",
        "from": "T20n1122_001:0524a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勝上虛空藏　　能授諸灌頂",
        "from": "T20n1122_001:0524a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "救世觀自在　　顯三昧瑜伽",
        "from": "T20n1122_001:0524a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "巧毘首羯磨　　善作密方便",
        "from": "T20n1122_001:0524a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如上諸聖尊　　我皆稽首禮",
        "from": "T20n1122_001:0524a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脩行此法者　　常住本尊觀",
        "from": "T20n1122_001:0524a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行步踐蓮華　　至於精室門",
        "from": "T20n1122_001:0524a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指三稱吽　　右目置麼字",
        "from": "T20n1122_001:0524a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左目置吒字　　右日左成月",
        "from": "T20n1122_001:0524a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "流散金剛光　　入門而顧視",
        "from": "T20n1122_001:0524a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸魔咸消散　　以左金剛拳",
        "from": "T20n1122_001:0524a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當心竪頭指　　右手亦復然",
        "from": "T20n1122_001:0524a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頂上三左旋　　指空及下界",
        "from": "T20n1122_001:0524a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復右旋轉　　皆誦吽字明",
        "from": "T20n1122_001:0524a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次思佛常住　　置禮三寶已",
        "from": "T20n1122_001:0524a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方誦清淨明　　二手未敷蓮",
        "from": "T20n1122_001:0524a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此明密義云　　諸法自性淨",
        "from": "T20n1122_001:0524a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我亦自性淨　　由是加持故",
        "from": "T20n1122_001:0524a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自他獲無垢　　便於自心中",
        "from": "T20n1122_001:0524a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀性成金剛　　三業已轉依",
        "from": "T20n1122_001:0524a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成三祕密門　　次作發悟契",
        "from": "T20n1122_001:0524a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二拳檀慧鉤　　進力側相拄",
        "from": "T20n1122_001:0524a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二舉如鉤勢　　誦此祕密言",
        "from": "T20n1122_001:0524a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此真語印加持　　諸佛不貪寂靜味",
        "from": "T20n1122_001:0524a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉從定起赴集會　　觀察行人同攝受",
        "from": "T20n1122_001:0524a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛持大印　　檀慧禪智反相叉",
        "from": "T20n1122_001:0524b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地置頂上　　想身遍滿塵剎海",
        "from": "T20n1122_001:0524b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬禮一一如來足真言曰。",
        "from": "T20n1122_001:0524b03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此金剛持印故　　一切正覺皆隨順",
        "from": "T20n1122_001:0524b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲奉事諸如來　　捨身奉獻阿閦佛",
        "from": "T20n1122_001:0524b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌舒頂上　　全身委地以心禮",
        "from": "T20n1122_001:0524b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0524b08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此真言身印故　　即得圓滿菩提心",
        "from": "T20n1122_001:0524b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應敬禮寶生尊　　為奉灌頂承事故",
        "from": "T20n1122_001:0524b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌下當心　　以額著地而奉獻",
        "from": "T20n1122_001:0524b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0524b16_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此捨身供養故　　即獲灌頂法王位",
        "from": "T20n1122_001:0524b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲求請轉法輪　　捨身供養無量壽",
        "from": "T20n1122_001:0524b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌置頂上　　以口著地奉其身",
        "from": "T20n1122_001:0524b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0524b23_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此真言求請故　　即獲轉妙法輪智",
        "from": "T20n1122_001:0524b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應敬禮不空王　　為求供養羯磨故",
        "from": "T20n1122_001:0524b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛合掌當心上　　以頂著地而求請",
        "from": "T20n1122_001:0524b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0524c01_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是獻身誠請故　　便能示現種種身",
        "from": "T20n1122_001:0524c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次想己身佛海前　　懺悔隨時勸請向",
        "from": "T20n1122_001:0524c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是並依略瑜伽　　即入本尊三昧耶",
        "from": "T20n1122_001:0524c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "跏坐端身入正受　　四無量心盡法界",
        "from": "T20n1122_001:0524c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習運用如法教大慈真言曰。",
        "from": "T20n1122_001:0524c10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦是真言時　　演心遍三界",
        "from": "T20n1122_001:0524c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普施眾生樂大悲真言曰。",
        "from": "T20n1122_001:0524c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦是真言時　　心遍眾生界",
        "from": "T20n1122_001:0524c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普門為拯濟大喜真言曰。",
        "from": "T20n1122_001:0524c18_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨類拯救已　　以此明加持",
        "from": "T20n1122_001:0524c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切有情類　　咸授與菩提",
        "from": "T20n1122_001:0524c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是利樂已　　方歸法界性",
        "from": "T20n1122_001:0524c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大捨真言曰。",
        "from": "T20n1122_001:0524c23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念此真言時　　心住於平等",
        "from": "T20n1122_001:0524c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不見有自他　　唯此一性相",
        "from": "T20n1122_001:0524c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即是普賢性　　大菩提之心",
        "from": "T20n1122_001:0524c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應二手旋舞。",
        "from": "T20n1122_001:0524c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作金剛合掌印。",
        "from": "T20n1122_001:0524c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "十度初分相交是也真言曰。",
        "from": "T20n1122_001:0524c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日㘓二合引惹里以此印便堅固縛。",
        "from": "T20n1122_001:0525a02_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名勝上金剛縛。",
        "from": "T20n1122_001:0525a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切契皆從此生真言曰。",
        "from": "T20n1122_001:0525a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合滿馱便以禪智入滿月。",
        "from": "T20n1122_001:0525a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力住其背。",
        "from": "T20n1122_001:0525a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名金剛拳大。",
        "from": "T20n1122_001:0525a05_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三摩耶印真言曰。",
        "from": "T20n1122_001:0525a06_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合母瑟胝二合𤚥次分為二。",
        "from": "T20n1122_001:0525a08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作本尊三麼耶契真言曰。",
        "from": "T20n1122_001:0525a08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結本誓印真言　　身處日輪同本尊",
        "from": "T20n1122_001:0525a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次呈悅喜三摩耶　　能令眾聖咸歡樂",
        "from": "T20n1122_001:0525a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛印忍願戒滿月　　檀慧禪智相合竪",
        "from": "T20n1122_001:0525a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0525a13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當開心門　　觀於二乳上",
        "from": "T20n1122_001:0525a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右怛囉左吒　　三掣金剛縛",
        "from": "T20n1122_001:0525a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當心如啟扇真言曰。",
        "from": "T20n1122_001:0525a17_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀前一肘間　　惡字素光色",
        "from": "T20n1122_001:0525a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智入月掌　　以進力二度",
        "from": "T20n1122_001:0525a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捻字安心內真言曰。",
        "from": "T20n1122_001:0525a21_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前拳印明　　封閉心殿門",
        "from": "T20n1122_001:0525a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "分二當心前　　稱吽舉右噓",
        "from": "T20n1122_001:0525a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次吽舉同左　　三吽相鉤結",
        "from": "T20n1122_001:0525a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽發伸進力　　左轉領辟除",
        "from": "T20n1122_001:0525a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋成結界　　欲作此法時",
        "from": "T20n1122_001:0525a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "內住大悲心　　外示大威怒",
        "from": "T20n1122_001:0525a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面竪利牙　　八臂操利械",
        "from": "T20n1122_001:0525b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍身發猛焰　　作大叱喝相",
        "from": "T20n1122_001:0525b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密跡金剛眾　　受教而侍立",
        "from": "T20n1122_001:0525b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結蓮華三昧耶　　本縛檀慧禪智竪",
        "from": "T20n1122_001:0525b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此真言密印故　　脩習三昧速現前",
        "from": "T20n1122_001:0525b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0525b06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次除邊轉心　　令歸平等智",
        "from": "T20n1122_001:0525b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前印檀慧交　　真言最後字",
        "from": "T20n1122_001:0525b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便掣密印開真言曰。",
        "from": "T20n1122_001:0525b11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔作此明印　　二乘發悲救",
        "from": "T20n1122_001:0525b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "凡夫入佛界　　佛出度眾生",
        "from": "T20n1122_001:0525b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆由是加持　　獲得普賢心",
        "from": "T20n1122_001:0525b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0525b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是真言故　　咸住大悲心",
        "from": "T20n1122_001:0525b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖凡同受悅　　是名大凡二",
        "from": "T20n1122_001:0525b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次召無始來　　妄見所生業",
        "from": "T20n1122_001:0525b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "縛忍願如針　　進力傍如鉤",
        "from": "T20n1122_001:0525b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心想召諸罪　　罪狀餓鬼形",
        "from": "T20n1122_001:0525b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反印向心召　　誦此誠實語",
        "from": "T20n1122_001:0525b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是三密門　　盡集自他業",
        "from": "T20n1122_001:0525b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稱吽進力拄　　是索引入掌",
        "from": "T20n1122_001:0525c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦𤚥內相叉　　兩兩相鉤結",
        "from": "T20n1122_001:0525c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已縛諸罪業　　忍願伸如幢",
        "from": "T20n1122_001:0525c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "布怛囉吒字　　觀成金剛杵",
        "from": "T20n1122_001:0525c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相拍如摧山　　忿句及怒形",
        "from": "T20n1122_001:0525c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能淨諸惡趣　　誦明忍願拍",
        "from": "T20n1122_001:0525c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或三或七遍真言曰。",
        "from": "T20n1122_001:0525c07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此相應法　　三業所積罪",
        "from": "T20n1122_001:0525c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無始極重障　　作此摧壞已",
        "from": "T20n1122_001:0525c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如劫火焚　　乾草胡麻等",
        "from": "T20n1122_001:0525c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來大悲故　　開此極祕門",
        "from": "T20n1122_001:0525c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結祕密印　　散壞業障輪",
        "from": "T20n1122_001:0525c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而成佛事業　　金剛按惹里",
        "from": "T20n1122_001:0525c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力屈背合　　禪智押其側",
        "from": "T20n1122_001:0525c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0525c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲顯發自性故　　當以蓮華三昧印",
        "from": "T20n1122_001:0525c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由此法加持　　三毒咸消終",
        "from": "T20n1122_001:0525c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心大菩提　　當時便成就",
        "from": "T20n1122_001:0525c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次入妙觀察智定　　縛印仰置跏趺上",
        "from": "T20n1122_001:0525c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力相背竪頭合　　禪智相拄押進力",
        "from": "T20n1122_001:0526a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此名觀自在王印　　端身正坐身無動",
        "from": "T20n1122_001:0526a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌拄上腭唇齒合　　心住大空無分別",
        "from": "T20n1122_001:0526a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛滿空來警悟　　告言汝證一道淨",
        "from": "T20n1122_001:0526a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "未證金剛瑜伽定　　便於定中禮佛足",
        "from": "T20n1122_001:0526a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餘文廣依瑜伽經所說。",
        "from": "T20n1122_001:0526a06_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦是真言。",
        "from": "T20n1122_001:0526a06_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前所內心惡字。",
        "from": "T20n1122_001:0526a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從字出無量赤光。",
        "from": "T20n1122_001:0526a07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右旋成日真言曰。",
        "from": "T20n1122_001:0526a07_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵質多鉢囉二合底吠能迦嚕弭由是真言加持故。",
        "from": "T20n1122_001:0526a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心如日。",
        "from": "T20n1122_001:0526a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由未分明。",
        "from": "T20n1122_001:0526a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦此真言曰。",
        "from": "T20n1122_001:0526a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵冒地質多母怛跛二合引娜夜弭由是真言加持。",
        "from": "T20n1122_001:0526a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如盛夏日輪。",
        "from": "T20n1122_001:0526a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "光明晃燿。",
        "from": "T20n1122_001:0526a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復於日輪中觀白蓮華。",
        "from": "T20n1122_001:0526a13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "置本尊心字。",
        "from": "T20n1122_001:0526a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "素白光色。",
        "from": "T20n1122_001:0526a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成本尊契。",
        "from": "T20n1122_001:0526a14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則是金剛智真言曰。",
        "from": "T20n1122_001:0526a14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵底瑟咤二合嚩日囉二合由是真言加持。",
        "from": "T20n1122_001:0526a16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自心智分明已。",
        "from": "T20n1122_001:0526a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復誦此真言曰。",
        "from": "T20n1122_001:0526a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合怛麼二合引句憾此密義云。",
        "from": "T20n1122_001:0526a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我是金剛則三業所成金剛也。",
        "from": "T20n1122_001:0526a19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復云我是金剛身。",
        "from": "T20n1122_001:0526a20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作是觀時。",
        "from": "T20n1122_001:0526a20_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此金剛亘周法界。",
        "from": "T20n1122_001:0526a20_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸佛咸入此金剛。",
        "from": "T20n1122_001:0526a21_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合同一體。",
        "from": "T20n1122_001:0526a21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復加持令堅固真言曰。",
        "from": "T20n1122_001:0526a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵儞哩二合荼底瑟咤二合縛日囉二合由是加持極堅牢不可傾動。",
        "from": "T20n1122_001:0526a24_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則自知成金剛不可壞身。",
        "from": "T20n1122_001:0526a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲成就本尊身誦是真言曰。",
        "from": "T20n1122_001:0526a25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵也他羯磨俱𡀔二合馱薩怛二合他憾次以前本尊三麼耶印真言。",
        "from": "T20n1122_001:0526a27_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持心額喉頂。",
        "from": "T20n1122_001:0526a27_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次作灌頂法。",
        "from": "T20n1122_001:0526a28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛界自在印而置頂上。",
        "from": "T20n1122_001:0526a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次額上次右後左真言曰。",
        "from": "T20n1122_001:0526a29_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合薩埵次頂右寶曰。",
        "from": "T20n1122_001:0526b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合囉怛娜二合次後法曰。",
        "from": "T20n1122_001:0526b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合達磨次左業曰。",
        "from": "T20n1122_001:0526b06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合羯磨密印。",
        "from": "T20n1122_001:0526b08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本縛忍願如刀。",
        "from": "T20n1122_001:0526b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力附是也。",
        "from": "T20n1122_001:0526b08_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是加持已。",
        "from": "T20n1122_001:0526b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五如來冠在其頂。",
        "from": "T20n1122_001:0526b09_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便分為二拳。",
        "from": "T20n1122_001:0526b09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至頂後進力三相繞。",
        "from": "T20n1122_001:0526b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下散垂繒勢。",
        "from": "T20n1122_001:0526b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是名鬘灌頂。",
        "from": "T20n1122_001:0526b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為已繫離垢繒真言曰。",
        "from": "T20n1122_001:0526b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合磨隷阿毘詵左𤚥便以二手為拳。",
        "from": "T20n1122_001:0526b13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舒進力。",
        "from": "T20n1122_001:0526b13_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於進指面想唵字。",
        "from": "T20n1122_001:0526b13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力度面置砧字。",
        "from": "T20n1122_001:0526b14_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "綠色白光。",
        "from": "T20n1122_001:0526b14_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如抽藕絲。",
        "from": "T20n1122_001:0526b14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為鉀縚索。",
        "from": "T20n1122_001:0526b15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從心三繞背後亦然。",
        "from": "T20n1122_001:0526b15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次臍及腰兩膝又臍腰心背咽喉頸後額前頂後。",
        "from": "T20n1122_001:0526b16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆三繞下散。",
        "from": "T20n1122_001:0526b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如垂天衣。",
        "from": "T20n1122_001:0526b17_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0526b17_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合迦嚩際嚩日哩二合句𡀔嚩日邏二合嚩日囉二合憾作是加持。",
        "from": "T20n1122_001:0526b20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則為已被三世如來大誓莊嚴慈悲甲冑。",
        "from": "T20n1122_001:0526b21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切天魔不能為障。",
        "from": "T20n1122_001:0526b21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "則能摧敗一切魔軍。",
        "from": "T20n1122_001:0526b22_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作諸佛事利樂有情。",
        "from": "T20n1122_001:0526b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為悅眾聖速獲成就。",
        "from": "T20n1122_001:0526b23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以二羽三相拍。",
        "from": "T20n1122_001:0526b23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0526b23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由以拍印加持故　　一切眾聖皆歡喜",
        "from": "T20n1122_001:0526b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復前觀本尊心　　變為本尊妙身相",
        "from": "T20n1122_001:0526b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前自觀今亦然　　為顯法智體無二",
        "from": "T20n1122_001:0526b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前觀五相所成就　　所謂自性之法身",
        "from": "T20n1122_001:0526b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今所觀者是智身　　住是三麼地祕門",
        "from": "T20n1122_001:0526b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本縛禪智入於月真言曰。",
        "from": "T20n1122_001:0526c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是加持故　　尊身則明顯",
        "from": "T20n1122_001:0526c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便召入自身　　次於所居處",
        "from": "T20n1122_001:0526c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復觀阿字門　　成妙高山王",
        "from": "T20n1122_001:0526c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上有寶樓閣　　於是宮殿內",
        "from": "T20n1122_001:0526c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復安本尊身　　眷屬皆圍繞",
        "from": "T20n1122_001:0526c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種供養具　　法界所有物",
        "from": "T20n1122_001:0526c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉滿其中　　作是觀念時",
        "from": "T20n1122_001:0526c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由斯真言威德故　　一切供具皆充滿",
        "from": "T20n1122_001:0526c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所欲咸從空庫生　　為欲奉事本尊故",
        "from": "T20n1122_001:0526c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當往成所作智定　　如是觀念加持已",
        "from": "T20n1122_001:0526c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以不空王召集眾聖。",
        "from": "T20n1122_001:0526c16_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定慧二羽金剛拳　　交臂抱胸屈進力",
        "from": "T20n1122_001:0526c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彈指發聲遍世界　　諦觀佛海普雲集",
        "from": "T20n1122_001:0526c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0526c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由以真言密印故　　本尊及與眾聖等",
        "from": "T20n1122_001:0526c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降臨𡍫塞虛空中　　次住平等性智定",
        "from": "T20n1122_001:0526c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "捧持閼伽眾香水　　灌沐眾聖無垢身",
        "from": "T20n1122_001:0526c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應以金剛合掌印　　加持香水誦真言",
        "from": "T20n1122_001:0526c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵跛囉麼速佉捨也莎羅里多娜麼帶囉娜麼弭帶誐挽擔若吽𤚥穀引呬引鉢囉二合底縒俱蘇麼惹稜娜託便以色召聖者。",
        "from": "T20n1122_001:0526c28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入殿內智身。",
        "from": "T20n1122_001:0526c28_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以三世印。",
        "from": "T20n1122_001:0526c28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進召如鉤真言曰。",
        "from": "T20n1122_001:0526c29_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合嚕閉惹召已。",
        "from": "T20n1122_001:0527a02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用聲引入智同一。",
        "from": "T20n1122_001:0527a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以進力相拄如索是也。",
        "from": "T20n1122_001:0527a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0527a03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合攝泥吽同一密合已。",
        "from": "T20n1122_001:0527a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以香止住。",
        "from": "T20n1122_001:0527a05_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以進力度鉤結如連鎖是也。",
        "from": "T20n1122_001:0527a06_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0527a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合巘第𤚥固縛已。",
        "from": "T20n1122_001:0527a07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又用味悅喜。",
        "from": "T20n1122_001:0527a07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以進力面相合是也。",
        "from": "T20n1122_001:0527a07_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0527a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合囉細引穀引應以語言而為歌詠。",
        "from": "T20n1122_001:0527a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結本尊印及真言。",
        "from": "T20n1122_001:0527a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以二手如射。",
        "from": "T20n1122_001:0527a11_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰意生曰。",
        "from": "T20n1122_001:0527a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵麼努引娜婆二合下同嚩嚩日囉二合若又以二交臂如抱。",
        "from": "T20n1122_001:0527a13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慧覆定。",
        "from": "T20n1122_001:0527a13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名觸曰。",
        "from": "T20n1122_001:0527a13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合計里枳羅吽又以慧肘。",
        "from": "T20n1122_001:0527a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極安定禪進。",
        "from": "T20n1122_001:0527a15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名愛縛曰。",
        "from": "T20n1122_001:0527a15_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵塞泥賀縛日囉二合𤚥又以二腰側。",
        "from": "T20n1122_001:0527a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名意氣曰。",
        "from": "T20n1122_001:0527a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合孽嚩穀又以二如前耎射。",
        "from": "T20n1122_001:0527a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名意生女曰。",
        "from": "T20n1122_001:0527a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵麼努娜婆二合嚩嚩日哩二合呬引又如前觸。",
        "from": "T20n1122_001:0527a21_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名適悅女曰。",
        "from": "T20n1122_001:0527a21_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合計里枳隷吽又如前愛嚩。",
        "from": "T20n1122_001:0527a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名愛結女曰。",
        "from": "T20n1122_001:0527a23_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵塞泥二合賀一嚩日哩二合抳二賀又以前意氣。",
        "from": "T20n1122_001:0527a25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名自在主女曰。",
        "from": "T20n1122_001:0527a25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合孽尾一吽又以止觀上仰如華。",
        "from": "T20n1122_001:0527a27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名春曰。",
        "from": "T20n1122_001:0527a27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵末度嚩日哩二合具唵二合下同具唵二合下同又以止觀下覆如香。",
        "from": "T20n1122_001:0527a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名夏曰。",
        "from": "T20n1122_001:0527a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合迷祇曳二合吒入吒又以二加眼。",
        "from": "T20n1122_001:0527b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名秋曰。",
        "from": "T20n1122_001:0527b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵捨喇嚩日哩二合惡引惡又以二當心。",
        "from": "T20n1122_001:0527b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉名冬曰。",
        "from": "T20n1122_001:0527b04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合勢始㘑惡惡四攝如前依次而用。",
        "from": "T20n1122_001:0527b06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復以四明召尊入身已。",
        "from": "T20n1122_001:0527b07_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結本尊三摩耶大契。",
        "from": "T20n1122_001:0527b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦摩訶衍百字真言。",
        "from": "T20n1122_001:0527b08_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是加持無上菩提尚不難得。",
        "from": "T20n1122_001:0527b09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況諸餘成就。",
        "from": "T20n1122_001:0527b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設犯五無間罪。",
        "from": "T20n1122_001:0527b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔誦消滅無餘。",
        "from": "T20n1122_001:0527b10_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故。",
        "from": "T20n1122_001:0527b10_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由本尊堅住己身故。",
        "from": "T20n1122_001:0527b11_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言曰。",
        "from": "T20n1122_001:0527b11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合薩埵三麼也麼努播攞也嚩日囉二合薩埵底吠二合努播底瑟咤二合儞哩二合下同荼鳥二合弭婆嚩素覩史庾二合弭婆嚩阿努囉訖妬二合弭婆嚩素補史庾二合弭婆嚩薩嚩悉地孕二合弭鉢囉二合也縒薩嚩羯磨素左迷質多室㘑二合藥矩嚕吽訶訶訶訶縠引婆誐挽薩嚩怛他孽多嚩日邏二合麼冥悶左嚩日唎二合婆嚩摩訶三摩耶薩埵惡引次以內外供養。",
        "from": "T20n1122_001:0527b20_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養密言王。",
        "from": "T20n1122_001:0527b20_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "固縛禪智竪。",
        "from": "T20n1122_001:0527b20_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名戲嬉菩薩曰。",
        "from": "T20n1122_001:0527b21_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵摩訶囉底纔作明印。",
        "from": "T20n1122_001:0527b23_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "麼訶囉底女適悅契諸聖。",
        "from": "T20n1122_001:0527b23_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便伸臂向前合腕。",
        "from": "T20n1122_001:0527b24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名鬘菩薩曰。",
        "from": "T20n1122_001:0527b24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵𡀔波戌鞞由是印真言。",
        "from": "T20n1122_001:0527b26_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持鬘女使普遍佛剎海。",
        "from": "T20n1122_001:0527b26_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雨散金剛鬘。",
        "from": "T20n1122_001:0527b27_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以印從臍至口散。",
        "from": "T20n1122_001:0527b28_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名歌供養菩薩曰。",
        "from": "T20n1122_001:0527b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵󰡊𡀔二合怛囉二合掃契由是密印及真言金剛歌女有一切世界微塵數妓樂女。",
        "from": "T20n1122_001:0527c02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以美妙音聲。",
        "from": "T20n1122_001:0527c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "周十方剎而為供養。",
        "from": "T20n1122_001:0527c03_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得獲如來無礙辯。",
        "from": "T20n1122_001:0527c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便以二旋舞金剛合掌頂上散。",
        "from": "T20n1122_001:0527c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名舞菩薩曰。",
        "from": "T20n1122_001:0527c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵薩嚩布而由是供養獲六神通次以縛下名焚香菩薩曰。",
        "from": "T20n1122_001:0527c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵鉢囉二合賀邏儞儞由是法故。",
        "from": "T20n1122_001:0527c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得香雲遍周一切佛剎。",
        "from": "T20n1122_001:0527c08_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又以上散如華。",
        "from": "T20n1122_001:0527c09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名華菩薩曰。",
        "from": "T20n1122_001:0527c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵頗攞誐弭由是得華雲周遍一切佛剎。",
        "from": "T20n1122_001:0527c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲如來三十二相。",
        "from": "T20n1122_001:0527c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以禪智竪相逼金剛縛。",
        "from": "T20n1122_001:0527c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名燈菩薩曰。",
        "from": "T20n1122_001:0527c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵蘇底惹仡哩二合由是得智光。",
        "from": "T20n1122_001:0527c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普照佛界而為供養。",
        "from": "T20n1122_001:0527c14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲如來五眼。",
        "from": "T20n1122_001:0527c15_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以縛當心塗香勢。",
        "from": "T20n1122_001:0527c15_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名塗香菩薩曰。",
        "from": "T20n1122_001:0527c15_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵蘇巘蕩儗由是戒香普塗佛剎故。",
        "from": "T20n1122_001:0527c17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獲得五分法身智。",
        "from": "T20n1122_001:0527c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以金剛合掌置於頂上。",
        "from": "T20n1122_001:0527c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦前虛空庫真言。",
        "from": "T20n1122_001:0527c18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出生一切供養雲海而為供養。",
        "from": "T20n1122_001:0527c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復住本尊羯磨儀則。",
        "from": "T20n1122_001:0527c20_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨力念誦。",
        "from": "T20n1122_001:0527c20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次執珠合掌捧於頂上。",
        "from": "T20n1122_001:0527c20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦本明加持當心。",
        "from": "T20n1122_001:0527c21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一與真言文句齊度。",
        "from": "T20n1122_001:0527c21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或萬千百。",
        "from": "T20n1122_001:0527c22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "晝夜四時精進修。",
        "from": "T20n1122_001:0527c22_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦畢已。",
        "from": "T20n1122_001:0527c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復以八供養及普供養等印。",
        "from": "T20n1122_001:0527c23_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養已。",
        "from": "T20n1122_001:0527c23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結本尊及眷屬印。",
        "from": "T20n1122_001:0527c23_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復示三麼耶。",
        "from": "T20n1122_001:0527c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及發願等。",
        "from": "T20n1122_001:0527c24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復降三世左旋解界。",
        "from": "T20n1122_001:0527c24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以縛印伸忍願如針。",
        "from": "T20n1122_001:0527c25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "心上掣開頂上合掌。",
        "from": "T20n1122_001:0527c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想聖眾還本宮觀。",
        "from": "T20n1122_001:0527c26_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名解脫印真言曰。",
        "from": "T20n1122_001:0527c26_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵訖哩二合妬引嚩薩嚩薩埵囉他二合悉地努多也他努誐孽縒特挽二合沒馱尾灑焰補娜邏誐麼娜也覩唵嚩日囉二合薩埵穆作是法已。",
        "from": "T20n1122_001:0528a01_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復如前加持灌頂被甲禮四如來。",
        "from": "T20n1122_001:0528a01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發願懺悔等。",
        "from": "T20n1122_001:0528a02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身住本尊觀。",
        "from": "T20n1122_001:0528a02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無間菩提心。",
        "from": "T20n1122_001:0528a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方出道場。",
        "from": "T20n1122_001:0528a03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心轉經印塔及像隨意經行。",
        "from": "T20n1122_001:0528a03_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛頂瑜伽他化自在天理趣會普賢修行念誦儀軌",
        "from": "T20n1122_001:0528a05_100",
        "context_with_next_sentence": false
    }
]