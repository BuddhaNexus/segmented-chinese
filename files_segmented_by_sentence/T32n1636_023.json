[
    {
        "source_sentence": "大乘集菩薩學論卷第二十三",
        "from": "T32n1636_023:0135b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫",
        "from": "T32n1636_023:0135b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "試鴻臚少卿宣梵大師賜紫",
        "from": "T32n1636_023:0135b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門臣日稱等奉　詔譯2念三寶品第十八之二論曰：",
        "from": "T32n1636_023:0135b23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由信等故，則能緣念諸佛功德。",
        "from": "T32n1636_023:0135b23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《護國尊者所問經》偈云：",
        "from": "T32n1636_023:0135b24_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「稽首調御真金色，　　面如滿月淨無垢，",
        "from": "T32n1636_023:0135b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德聖智實難思，　　於三有中無與等。",
        "from": "T32n1636_023:0135b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼螺髻紺青色，　　高顯清淨如須彌，",
        "from": "T32n1636_023:0135b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眉間毫相普照明，　　烏瑟柅沙無見者。",
        "from": "T32n1636_023:0135b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來目淨若青蓮，　　譬軍那花及珂月，",
        "from": "T32n1636_023:0135b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憐憫觀視諸有情，　　是故我今稽首禮。",
        "from": "T32n1636_023:0135c01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來舌相類銅色，　　脩廣而能覆面輪，",
        "from": "T32n1636_023:0135c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "演甘露法潤群生，　　是故我今稽首禮。",
        "from": "T32n1636_023:0135c03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來四十齒齊密，　　潔白堅利若金剛，",
        "from": "T32n1636_023:0135c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出真實語發光輝，　　是故我今稽首禮。",
        "from": "T32n1636_023:0135c05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來色相最殊特，　　威光照耀百千剎，",
        "from": "T32n1636_023:0135c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "釋梵護世及諸天，　　所有光明無復覩。",
        "from": "T32n1636_023:0135c07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來雙腨逾鹿王，　　胸臆廣袤如師子，",
        "from": "T32n1636_023:0135c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "俯視安行侔象王，　　大地山川俱震動。",
        "from": "T32n1636_023:0135c09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來身相極端嚴，　　燦若金光而潤澤，",
        "from": "T32n1636_023:0135c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸世間無比倫，　　眾生見者不厭捨。",
        "from": "T32n1636_023:0135c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來往昔百千劫，　　於所愛樂皆能施，",
        "from": "T32n1636_023:0135c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈悲哀念諸有情，　　是故我今稽首禮。",
        "from": "T32n1636_023:0135c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來志樂修諸度，　　戒檀忍進善堅固，",
        "from": "T32n1636_023:0135c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪定勝惠悉圓明，　　是故我今稽首禮。",
        "from": "T32n1636_023:0135c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來眾中師子吼，　　勇猛能摧諸異論，",
        "from": "T32n1636_023:0135c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三毒垢穢盡無餘，　　是故我今稽首禮。",
        "from": "T32n1636_023:0135c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼三業超三有，　　譬若芙蕖不著水，",
        "from": "T32n1636_023:0135c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迦陵頻伽淨妙聲，　　是故我今稽具禮。",
        "from": "T32n1636_023:0135c19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知世間皆幻化，　　如俳優者易形色，",
        "from": "T32n1636_023:0135c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦如陽焰及夢中，　　無我無人無壽者。",
        "from": "T32n1636_023:0135c21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法本空寂無有生，　　不能悟解隨流轉，",
        "from": "T32n1636_023:0135c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大慈普導諸群迷，　　方便隨機宣正法。",
        "from": "T32n1636_023:0135c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察世間諸苦惱，　　貪等眾病鎮相縈，",
        "from": "T32n1636_023:0135c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來無上大醫王，　　各各對治令解脫。",
        "from": "T32n1636_023:0135c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示生老死憂悲苦，　　愛別離等諸過患，",
        "from": "T32n1636_023:0135c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼救護於世間，　　咸令厭離皆除斷。",
        "from": "T32n1636_023:0135c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄鬼畜險惡趣，　　諸有情輩隨輪轉，",
        "from": "T32n1636_023:0135c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "憫彼無親無道師，　　指示愚迷登正路。",
        "from": "T32n1636_023:0135c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過去諸佛出世間，　　自在咸宣深法義，",
        "from": "T32n1636_023:0136a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是世尊同彼說，　　悉使眾生證聖道。",
        "from": "T32n1636_023:0136a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛聲深遠過梵天，　　響潤清徹生眾善，",
        "from": "T32n1636_023:0136a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾闥婆與緊那羅，　　所出樂聲皆不現。",
        "from": "T32n1636_023:0136a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積集清淨諸功德，　　演說無邊真實語，",
        "from": "T32n1636_023:0136a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千那由他眾生，　　聞已各發三乘意。",
        "from": "T32n1636_023:0136a06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能供養於如來，　　當獲勝妙諸快樂，",
        "from": "T32n1636_023:0136a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "富貴自在眾所欽，　　後於世間為帝王，",
        "from": "T32n1636_023:0136a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作輪王御四洲，　　具足七寶皆殊異，",
        "from": "T32n1636_023:0136a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常以十善利眾生，　　由於如來興淨業。",
        "from": "T32n1636_023:0136a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為忉利諸天主，　　或夜摩王覩史陀，",
        "from": "T32n1636_023:0136a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至他化大梵天，　　皆因供養如來故。",
        "from": "T32n1636_023:0136a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是見佛供養已，　　及所聞法生信敬，",
        "from": "T32n1636_023:0136a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆能永斷諸苦因，　　得證寂靜離塵垢。",
        "from": "T32n1636_023:0136a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊了知道非道，　　而能止惡咸歸善，",
        "from": "T32n1636_023:0136a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸眾生獲吉祥，　　咸皆安住於聖道。",
        "from": "T32n1636_023:0136a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人求福供養佛，　　常獲無盡勝福藏，",
        "from": "T32n1636_023:0136a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於俱胝劫不可量，　　乃至當證菩提果。",
        "from": "T32n1636_023:0136a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微妙剎土勝莊嚴，　　如他化天極可愛，",
        "from": "T32n1636_023:0136a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨其願力住其中，　　身口意業常清淨。",
        "from": "T32n1636_023:0136a20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是種種妙福報，　　皆由供養於如來，",
        "from": "T32n1636_023:0136a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人雖處於世間，　　如受龍宮天上樂。",
        "from": "T32n1636_023:0136a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來具廣大名稱，　　一切剎土悉聞知，",
        "from": "T32n1636_023:0136a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常於無邊大眾中，　　十方諸佛皆稱讚。",
        "from": "T32n1636_023:0136a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "永離世間諸熱惱，　　顯示大悲無與等，",
        "from": "T32n1636_023:0136a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上寂靜人中尊，　　是故我今稽首禮。",
        "from": "T32n1636_023:0136a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今獲得五神通，　　住立虛空伸讚歎，",
        "from": "T32n1636_023:0136a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稽首勇猛大導師，　　分別諸法淨無垢。",
        "from": "T32n1636_023:0136a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今於天人大集會，　　稱揚善逝諸功德，",
        "from": "T32n1636_023:0136a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有廣大勝福田，　　同與眾生成正覺。",
        "from": "T32n1636_023:0136b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」又如《法集經》說：",
        "from": "T32n1636_023:0136b02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「復次善男子！",
        "from": "T32n1636_023:0136b02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛世尊具大福智而為莊嚴，以大慈悲為所行境，於諸世間為救護者，作大醫王善拔毒箭，常住寂靜妙三摩地，不著生死及與涅槃。",
        "from": "T32n1636_023:0136b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至於諸有情猶如父母，以大慈心平等憐愍一切世間無有過者。",
        "from": "T32n1636_023:0136b07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以相應智為世照明，大智有情之所圍繞，一切人民常樂承事。",
        "from": "T32n1636_023:0136b08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠離自樂息除他苦，住持正法、以法為主、得法自在，以法為食、以法為藥、以法為施，一切皆捨。",
        "from": "T32n1636_023:0136b10_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以智揀擇常不放逸，於險難處為作橋梁，如王者道平坦無障，乃至清淨色身見者無厭。",
        "from": "T32n1636_023:0136b12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛世尊有如是等無量功德，我當成就彼諸義利。",
        "from": "T32n1636_023:0136b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」此說名為菩薩念佛。",
        "from": "T32n1636_023:0136b14_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "云何念法？",
        "from": "T32n1636_023:0136b14_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「菩薩了知諸佛世尊無邊功德，皆從法生、從法所化、從法所得、從法增上、從法而有、從法境界、從法依止、從法成就，乃至所有世出世間諸快樂事，亦從法生、從法成就。",
        "from": "T32n1636_023:0136b18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故我求諸佛菩提，應尊重法，依法境界、依法所歸、依法決定、依法堅固、依法脩行。",
        "from": "T32n1636_023:0136b20_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此說是名菩薩念法。",
        "from": "T32n1636_023:0136b20_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次菩薩於諸眾生應當平等而為說法，以法無高下故，我同彼法其心平等。",
        "from": "T32n1636_023:0136b22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無面從而為宣說，以法無相黨故，我同彼法其心平等。",
        "from": "T32n1636_023:0136b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無時節而為宣說，以法內心領受故，我同彼法其心平等。",
        "from": "T32n1636_023:0136b25_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非於勝而為宣說、於其劣者不為宣說，以法各能入解故，我同彼法其心平等。",
        "from": "T32n1636_023:0136b27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非於淨而為宣說、於不淨者不為宣說，以法離染污故，我同彼法其心平等。",
        "from": "T32n1636_023:0136b28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又法非於聖人而為宣說、於凡夫者不為宣說，以法離諸見故，我同彼法其心平等。",
        "from": "T32n1636_023:0136c01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非盡說而夜不說、亦非夜說而晝不說，以法常所加持故，我同彼法其心平等。",
        "from": "T32n1636_023:0136c03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非調伏亦無違越，以法無所取著故，我同彼法其心平等。",
        "from": "T32n1636_023:0136c04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非減失亦非增長，以法如虛空故，我同彼法其心平等。",
        "from": "T32n1636_023:0136c06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法不厭眾生眾生能護法，我同彼法其心平等。",
        "from": "T32n1636_023:0136c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非求所歸與世作歸依，我同彼法其心平等。",
        "from": "T32n1636_023:0136c08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無損惱，以法離所害相故，我同彼法其心平等。",
        "from": "T32n1636_023:0136c09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法無怨嫉，以法離諸結使故，我同彼法其心平等。",
        "from": "T32n1636_023:0136c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法非怖輪迴亦不樂涅槃，以法無分別故，我同彼法其心平等。",
        "from": "T32n1636_023:0136c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如是積集正念，是為念法。",
        "from": "T32n1636_023:0136c12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」云何念僧？",
        "from": "T32n1636_023:0136c13_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中復說：",
        "from": "T32n1636_023:0136c13_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是說法者、是行法者、是思惟法者、是法福田者、是任持法者、是依止法者、是供養法者、是如法所作者、是法境界者、是法行處者、是成就法者、是自性質直者、是自性清淨者、是隨順教誨者、是發起大悲者、是能揀擇智境界者、是常修習白淨法者。",
        "from": "T32n1636_023:0136c18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」論曰：",
        "from": "T32n1636_023:0136c19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩如是念僧，則能成辦一切眾生真實功德。",
        "from": "T32n1636_023:0136c20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如《無垢稱經》偈云：",
        "from": "T32n1636_023:0136c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「或示老病死，　　成就諸群生，",
        "from": "T32n1636_023:0136c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知如幻化，　　通達無有礙。",
        "from": "T32n1636_023:0136c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現劫燒盡，　　天地皆洞然，",
        "from": "T32n1636_023:0136c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眾人有常想，　　照令知無常。",
        "from": "T32n1636_023:0136c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無數億眾生，　　俱來請菩薩，",
        "from": "T32n1636_023:0136c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時到其舍，　　化令向佛道。",
        "from": "T32n1636_023:0136c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經書禁呪術，　　工巧諸伎藝，",
        "from": "T32n1636_023:0136c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "盡現行此事，　　饒益諸群生。",
        "from": "T32n1636_023:0136c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間眾道法，　　悉於中出家，",
        "from": "T32n1636_023:0136c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因以解人惑，　　而不墮邪見。",
        "from": "T32n1636_023:0137a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作日月天，　　梵王世界主，",
        "from": "T32n1636_023:0137a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或時作地水，　　或復作風火。",
        "from": "T32n1636_023:0137a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫中有疾疫，　　現作諸藥草，",
        "from": "T32n1636_023:0137a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有服之者，　　除病消眾毒。",
        "from": "T32n1636_023:0137a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫中有飢饉，　　現身作飲食，",
        "from": "T32n1636_023:0137a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先救彼飢渴，　　却以法語人。",
        "from": "T32n1636_023:0137a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "劫中有刀兵，　　為之起慈悲，",
        "from": "T32n1636_023:0137a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化彼諸眾生，　　令住無諍地。",
        "from": "T32n1636_023:0137a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有大戰陣，　　立之以等力，",
        "from": "T32n1636_023:0137a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩現威勢，　　降伏使和安。",
        "from": "T32n1636_023:0137a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切國土中，　　諸有地獄處，",
        "from": "T32n1636_023:0137a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "輒往到于彼，　　免濟其苦惱。",
        "from": "T32n1636_023:0137a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切國土中，　　畜生相食噉，",
        "from": "T32n1636_023:0137a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆現生於彼，　　為之作利益。",
        "from": "T32n1636_023:0137a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "示受於五欲，　　亦復現行禪，",
        "from": "T32n1636_023:0137a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令魔心憒亂，　　不能得其便。",
        "from": "T32n1636_023:0137a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火中生蓮花，　　是可謂希有，",
        "from": "T32n1636_023:0137a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "在欲而行禪，　　希有亦如是。",
        "from": "T32n1636_023:0137a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現作婬女，　　引諸好色者，",
        "from": "T32n1636_023:0137a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以欲鉤牽，　　後令入佛智。",
        "from": "T32n1636_023:0137a21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為邑中主，　　或作商人導，",
        "from": "T32n1636_023:0137a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國師及大臣，　　以祐利眾生。",
        "from": "T32n1636_023:0137a23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸有貧窮者，　　現作無盡藏，",
        "from": "T32n1636_023:0137a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因以勸導之，　　令發菩提心。",
        "from": "T32n1636_023:0137a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我心憍慢者，　　為現大力士，",
        "from": "T32n1636_023:0137a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "消伏諸貢高，　　令住無上道。",
        "from": "T32n1636_023:0137a27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其有恐懼眾，　　居前而安慰，",
        "from": "T32n1636_023:0137a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以施無畏，　　後令發道心。",
        "from": "T32n1636_023:0137a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現離婬欲，　　為五通仙人，",
        "from": "T32n1636_023:0137b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開導諸群生，　　令住戒忍慈。",
        "from": "T32n1636_023:0137b02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見須供事者，　　現為作僮僕，",
        "from": "T32n1636_023:0137b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "既悅可其意，　　乃發以道心。",
        "from": "T32n1636_023:0137b04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨彼之所須，　　得入於佛道，",
        "from": "T32n1636_023:0137b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善方便力，　　皆能給足之。",
        "from": "T32n1636_023:0137b06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是道無量，　　所行無有涯，",
        "from": "T32n1636_023:0137b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智惠無邊際，　　度脫無數眾。",
        "from": "T32n1636_023:0137b08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "假令一切佛，　　於無數億劫，",
        "from": "T32n1636_023:0137b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚歎其功德，　　猶尚不能盡。",
        "from": "T32n1636_023:0137b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」菩薩修習供養功德，如《寶光明陀羅尼經》偈云：",
        "from": "T32n1636_023:0137b12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「放大光明鬘莊嚴，　　種種微妙鬘雲海，",
        "from": "T32n1636_023:0137b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是妙鬘普周遍，　　廣大供養作佛事。",
        "from": "T32n1636_023:0137b14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明香莊嚴，　　種種微妙香雲海，",
        "from": "T32n1636_023:0137b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是妙香普周遍，　　廣大供養作佛事。",
        "from": "T32n1636_023:0137b16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明花莊嚴，　　種種微妙花雲海，",
        "from": "T32n1636_023:0137b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是妙花普周遍，　　廣大供養作佛事。",
        "from": "T32n1636_023:0137b18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明瓔珞嚴，　　種種瓔珞妙雲海，",
        "from": "T32n1636_023:0137b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是瓔珞普周遍，　　廣大供養行佛事。",
        "from": "T32n1636_023:0137b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "放大光明現寶幢，　　青黃赤白相間飾，",
        "from": "T32n1636_023:0137b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種珍寶共合成，　　而用莊嚴於佛剎。",
        "from": "T32n1636_023:0137b22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摩尼寶網色交映，　　懸眾繒幡以為蓋，",
        "from": "T32n1636_023:0137b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垂珠瓔珞演佛音，　　莊嚴而覆如來上。",
        "from": "T32n1636_023:0137b24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於一如來伸供養，　　掌中涌施諸嚴具，",
        "from": "T32n1636_023:0137b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量諸佛亦同然，　　自在變現三摩地。",
        "from": "T32n1636_023:0137b26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "神通智力妙難思，　　廣能化利諸含識，",
        "from": "T32n1636_023:0137b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "最上神變三摩地，　　而現百千方便門。",
        "from": "T32n1636_023:0137b28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸如來供養門，　　一切能捨布施門，",
        "from": "T32n1636_023:0137b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "杜多功德持戒門，　　無盡不動忍辱門，",
        "from": "T32n1636_023:0137c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勤行勇猛精進門，　　安住寂靜禪定門，",
        "from": "T32n1636_023:0137c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "達諸義趣勝惠門，　　淨修梵行神通門，",
        "from": "T32n1636_023:0137c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行四攝事歡喜門，　　積集福智利他門，",
        "from": "T32n1636_023:0137c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四諦緣生解脫門，　　修習根力勝道門，",
        "from": "T32n1636_023:0137c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悟聲聞乘解脫門，　　觀緣覺乘清淨門，",
        "from": "T32n1636_023:0137c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修最上乘神變門，　　或現無常苦惱門，",
        "from": "T32n1636_023:0137c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "了知無我壽者門，　　作不淨觀離貪門，",
        "from": "T32n1636_023:0137c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "證真常樂三昧門，　　如是種種方便門，",
        "from": "T32n1636_023:0137c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "平等普共諸眾生，　　皆能證彼解脫門。",
        "from": "T32n1636_023:0137c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現諸形類應群機，　　神通說法難思議，",
        "from": "T32n1636_023:0137c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順成熟諸有情，　　各生愛敬咸安樂。",
        "from": "T32n1636_023:0137c12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常思出離世間因，　　求證清淨三摩地，",
        "from": "T32n1636_023:0137c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若逢飢饉眾難時，　　隨其所欲而周給。",
        "from": "T32n1636_023:0137c14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣能憐愍諸有情，　　離諸憂怖常安隱，",
        "from": "T32n1636_023:0137c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及以上妙諸飲食，　　種種衣服諸庫藏，",
        "from": "T32n1636_023:0137c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國城所愛悉能捐，　　於彼世間興大施。",
        "from": "T32n1636_023:0137c17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現身相極殊特，　　種種莊嚴具威勢，",
        "from": "T32n1636_023:0137c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香巧妙眾花鬘，　　巍巍色相無與等，",
        "from": "T32n1636_023:0137c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是形色及威儀，　　各各見已樂瞻奉，",
        "from": "T32n1636_023:0137c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為其方便演法音，　　普使群生發道意，",
        "from": "T32n1636_023:0137c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現迦陵頻伽聲，　　俱計羅及俱拏聲，",
        "from": "T32n1636_023:0137c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緊那羅眾妙鼓聲，　　皆演如來解脫義。",
        "from": "T32n1636_023:0137c23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛出世間所宣說，　　八萬四千真法藏，",
        "from": "T32n1636_023:0137c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是分別諸法門，　　悉與眾生作饒益。",
        "from": "T32n1636_023:0137c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現苦惱或快樂，　　及作義利非義利，",
        "from": "T32n1636_023:0137c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨宜引導令發心，　　皆能與彼同修作。",
        "from": "T32n1636_023:0137c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或見障難諸危厄，　　種種逼迫難堪忍，",
        "from": "T32n1636_023:0137c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當以勇悍大悲心，　　代彼眾生而受苦。",
        "from": "T32n1636_023:0137c29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若處無有解脫法，　　亦無阿蘭若出離，",
        "from": "T32n1636_023:0138a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以王福力其興崇，　　令彼皆生於淨信。",
        "from": "T32n1636_023:0138a02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若離在家貪愛縛，　　則為超越世間因，",
        "from": "T32n1636_023:0138a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於諸欲境盡蠲除，　　是為世間照明者。",
        "from": "T32n1636_023:0138a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能具足諸功德，　　是名行法大丈夫，",
        "from": "T32n1636_023:0138a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牟尼妙行悉能修，　　是人得生極樂土，",
        "from": "T32n1636_023:0138a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命長遠不可涯，　　受勝妙樂消諸惑，",
        "from": "T32n1636_023:0138a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "生老病苦不能侵，　　於無常中得自在。",
        "from": "T32n1636_023:0138a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯示貪瞋諸過失，　　熾然燒煮無暫停，",
        "from": "T32n1636_023:0138a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是四相亦復然，　　普使群迷令覺悟。",
        "from": "T32n1636_023:0138a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來十力四無畏，　　十八不共諸功德，",
        "from": "T32n1636_023:0138a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今稱讚誓歸依，　　常於世間作義利。",
        "from": "T32n1636_023:0138a12_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "譬如種種諸幻士，　　而能變現眾形相，",
        "from": "T32n1636_023:0138a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來出現於世間，　　神通示化亦如是。",
        "from": "T32n1636_023:0138a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能以權巧善方便，　　廣行饒益諸有情，",
        "from": "T32n1636_023:0138a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "清淨意樂叵思議，　　譬若蓮花超濁水。",
        "from": "T32n1636_023:0138a16_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現戲論諸言詞，　　瓔珞莊嚴舞旋轉，",
        "from": "T32n1636_023:0138a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種伎藝眾所觀，　　顯諸色相皆如幻。",
        "from": "T32n1636_023:0138a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為村營聚落主，　　或為長者或商賈，",
        "from": "T32n1636_023:0138a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或為輔相及宰臣，　　辯論無倫大智者，",
        "from": "T32n1636_023:0138a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或於曠野作大樹，　　或為無盡珍寶藏，",
        "from": "T32n1636_023:0138a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意摩尼隨所須，　　於迷方所為引導。",
        "from": "T32n1636_023:0138a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現所作諸事業，　　種種彩繪及工巧，",
        "from": "T32n1636_023:0138a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經營播植競希求，　　令悟世間非久住。",
        "from": "T32n1636_023:0138a24_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現冤親無憎愛，　　咸令安隱獲吉祥，",
        "from": "T32n1636_023:0138a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "洞明方藥濟群生，　　方便教示牟尼道。",
        "from": "T32n1636_023:0138a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或演最上牟尼法，　　普使人天離癡惑，",
        "from": "T32n1636_023:0138a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令諸異道出家人，　　發心歸向一切智。",
        "from": "T32n1636_023:0138a28_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是苦行諸外道，　　常持不語喬答摩，",
        "from": "T32n1636_023:0138a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "裸形離繫號沙門，　　各能依奉師尊教。",
        "from": "T32n1636_023:0138b01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有常持捨身行，　　執為最勝無過上，",
        "from": "T32n1636_023:0138b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辮髮長髻童子戒，　　各能依奉師尊教。",
        "from": "T32n1636_023:0138b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有五熱而炙身，　　或受狗牛等禁戒，",
        "from": "T32n1636_023:0138b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有常被鹿皮衣，　　各能依奉師尊教。",
        "from": "T32n1636_023:0138b05_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有常樂天中智，　　無善無惡及無因，",
        "from": "T32n1636_023:0138b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯飡根果及清泉，　　各能依奉師尊教。",
        "from": "T32n1636_023:0138b07_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或有蹲坐或翹足，　　或臥荊棘或塗灰，",
        "from": "T32n1636_023:0138b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執杖令心不異緣，　　各能依奉師尊教。",
        "from": "T32n1636_023:0138b09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至一一諸外道，　　彼能猛利修苦行，",
        "from": "T32n1636_023:0138b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化令永斷諸苦因，　　悉使深心求解脫。",
        "from": "T32n1636_023:0138b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是世間諸異見，　　皆由依止於師尊，",
        "from": "T32n1636_023:0138b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今為接彼邪徒，　　開示如來真實義。",
        "from": "T32n1636_023:0138b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或演大乘微妙句，　　或宣祕密真言句，",
        "from": "T32n1636_023:0138b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或現直說顯了句，　　或樂天中言說句，",
        "from": "T32n1636_023:0138b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以文字分別句，　　決定妙義金剛句，",
        "from": "T32n1636_023:0138b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以智摧諸異論句，　　棄背非法言論句。",
        "from": "T32n1636_023:0138b17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或示人中明呪句，　　或現諸天勝妙句，",
        "from": "T32n1636_023:0138b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸龍夜叉乾闥婆，　　阿蘇囉及步多句，",
        "from": "T32n1636_023:0138b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "緊那羅與誐嚕拏，　　摩睺羅等所說句，",
        "from": "T32n1636_023:0138b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各能入解彼言詞，　　宣暢如來解脫法。",
        "from": "T32n1636_023:0138b21_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂由得悟真實義，　　於佛法中心決定，",
        "from": "T32n1636_023:0138b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "語言智境妙難思，　　此為最上三摩地。",
        "from": "T32n1636_023:0138b23_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂由獲彼三摩地，　　而能普放淨光明，",
        "from": "T32n1636_023:0138b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其光攝化諸機宜，　　令獲輕安常寂靜。",
        "from": "T32n1636_023:0138b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或放光明名善見，　　眾生蒙光而起信，",
        "from": "T32n1636_023:0138b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉能觀察眾善因，　　具足不空無上智。",
        "from": "T32n1636_023:0138b27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由是光明普照已，　　獲覩無邊佛法僧，",
        "from": "T32n1636_023:0138b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來塔廟眾靈蹤，　　一一稱揚伸供養。",
        "from": "T32n1636_023:0138b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又放光明名勝燈，　　其光晃耀無能比，",
        "from": "T32n1636_023:0138c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為欲嚴淨於世間，　　能破微塵諸黑暗。",
        "from": "T32n1636_023:0138c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼光照矚眾生已，　　各各持燈而奉獻，",
        "from": "T32n1636_023:0138c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來供養不思議，　　復以眾燈而用施。",
        "from": "T32n1636_023:0138c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以酥燈及油燈，　　或以松脂及竹葦，",
        "from": "T32n1636_023:0138c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃至眾香妙寶燈，　　施已願授然燈記。",
        "from": "T32n1636_023:0138c06_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又放光明名鉤召，　　悉能警集諸有情，",
        "from": "T32n1636_023:0138c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由斯教誨彼群迷，　　解脫輪回愛有海。",
        "from": "T32n1636_023:0138c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是慈光普照已，　　各使眾生得開悟，",
        "from": "T32n1636_023:0138c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當令永離四瀑流，　　現除憂惱常安樂。",
        "from": "T32n1636_023:0138c10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」大乘集菩薩學論卷第二十三",
        "from": "T32n1636_023:0138c11_100",
        "context_with_next_sentence": false
    }
]