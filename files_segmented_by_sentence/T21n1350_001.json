[
    {
        "source_sentence": "佛說一切如來名號陀羅尼經",
        "from": "T21n1350_001:0864a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1350_001:0864a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1350_001:0864a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。",
        "from": "T21n1350_001:0864a07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一時佛在摩伽陀國法野大菩提道場。",
        "from": "T21n1350_001:0864a08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初成正覺。",
        "from": "T21n1350_001:0864a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與諸菩薩摩訶薩眾八萬人俱。",
        "from": "T21n1350_001:0864a09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有八萬四千大梵天子亦在道場。",
        "from": "T21n1350_001:0864a09_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆圍繞瞻仰世尊。",
        "from": "T21n1350_001:0864a10_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時會中有菩薩摩訶薩名觀自在。",
        "from": "T21n1350_001:0864a11_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從座而起偏袒右肩。",
        "from": "T21n1350_001:0864a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右膝著地合掌向佛。",
        "from": "T21n1350_001:0864a12_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而白佛言世尊。",
        "from": "T21n1350_001:0864a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有一切如來名號陀羅尼。",
        "from": "T21n1350_001:0864a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼一切如來名號陀羅尼。",
        "from": "T21n1350_001:0864a14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乃是莊嚴劫賢劫星宿劫中。",
        "from": "T21n1350_001:0864a14_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸佛如來已說當說。",
        "from": "T21n1350_001:0864a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今承佛威力。",
        "from": "T21n1350_001:0864a15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦為利益安樂諸眾生故樂欲宣說。",
        "from": "T21n1350_001:0864a16_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊加哀覆護。",
        "from": "T21n1350_001:0864a17_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊讚觀自在菩薩摩訶薩言。",
        "from": "T21n1350_001:0864a18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉觀自在。",
        "from": "T21n1350_001:0864a19_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝能為利益一切眾生發大悲心。",
        "from": "T21n1350_001:0864a19_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如意宣說。",
        "from": "T21n1350_001:0864a20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀自在菩薩蒙佛許已。",
        "from": "T21n1350_001:0864a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言世尊。",
        "from": "T21n1350_001:0864a21_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人欲誦彼陀羅尼。",
        "from": "T21n1350_001:0864a21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先當至誠誦諸佛如來名號。",
        "from": "T21n1350_001:0864a22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所謂寶師子自在如來寶雲如來。",
        "from": "T21n1350_001:0864a23_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寶莊嚴藏如來師子大雲如來。",
        "from": "T21n1350_001:0864a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲師子如來須彌如來。",
        "from": "T21n1350_001:0864a24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子吼如來師子利如來。",
        "from": "T21n1350_001:0864a24_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵音如來善愛如來。",
        "from": "T21n1350_001:0864a25_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華上如來燃燈如來。",
        "from": "T21n1350_001:0864a25_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華生如來遜那囉如來。",
        "from": "T21n1350_001:0864a26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持花如來持寶如來。",
        "from": "T21n1350_001:0864a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法生如來日光如來。",
        "from": "T21n1350_001:0864a27_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日照如來月光如來。",
        "from": "T21n1350_001:0864a27_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量藏如來無量莊嚴藏如來。",
        "from": "T21n1350_001:0864a28_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無量光如來蓮華藏如來。",
        "from": "T21n1350_001:0864a29_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天妙音如來拘枳羅音如來。",
        "from": "T21n1350_001:0864a29_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是等諸佛如來名號。",
        "from": "T21n1350_001:0864b01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人得聞為他宣說。",
        "from": "T21n1350_001:0864b01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人六十千劫不聞惡趣之名。",
        "from": "T21n1350_001:0864b02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何況墮於阿鼻地獄。",
        "from": "T21n1350_001:0864b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時觀自在菩薩。",
        "from": "T21n1350_001:0864b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是諸佛如來名號已。",
        "from": "T21n1350_001:0864b03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1350_001:0864b04_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "怛𭔞切身下同他引一拶覩囉引尸引帝踰引惹仁左切下同那設多薩賀薩囉二合引尼二惹咤引婆引囉末酤吒引朗訖哩二合多引三馱引囉尼莎引賀引四薩哩嚩二合怛他引誐多母哩底二合多五馱引囉尼引莎引賀引六阿嚩路吉帝引說囉引野莎引賀引七薩哩嚩二合怛他引誐都引烏瑟膩二合沙引八馱引囉尼莎引賀引九薩哩嚩二合怛他引誐多婆引始多十達哩摩二合塞建二合馱十一馱引囉尼引莎引賀引十二薩哩嚩二合怛他引誐多婆引始多十三颯鉢多二合馱引囉尼莎引賀引十四鉢訥摩二合阿婆儞哥野莎引賀引十五阿瑟吒二合摩賀引跋野馱引囉尼莎引賀引十六稅引多嚩蘭拏二合引野莎引賀引十七薩哩嚩二合怛他引誐多那引摩馱引囉尼莎引賀引十八阿尸引帝鉢訥摩二合引設儞哥引野怛他引誐多馱引囉尼莎引賀引十九鉢訥摩二合賀悉多二合引野莎引賀引二十薩哩嚩二合滿怛囉二合馱引囉尼引莎引賀引二十一爾時觀自在菩薩。",
        "from": "T21n1350_001:0864b23_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說是陀羅尼已。",
        "from": "T21n1350_001:0864b23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復白佛言世尊。",
        "from": "T21n1350_001:0864b24_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此一切如來名號陀羅尼。",
        "from": "T21n1350_001:0864b24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有善男子善女人。",
        "from": "T21n1350_001:0864b25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受持讀誦思惟記念。",
        "from": "T21n1350_001:0864b25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為他人說。",
        "from": "T21n1350_001:0864b25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所有五無間業悉得消除。",
        "from": "T21n1350_001:0864b26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命終之後生天為王。",
        "from": "T21n1350_001:0864b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽八十四百千俱胝劫數。",
        "from": "T21n1350_001:0864b27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後得轉輪王位壽六十中劫。",
        "from": "T21n1350_001:0864b28_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過是劫已當得成佛。",
        "from": "T21n1350_001:0864b28_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名曰蓮華藏如來應供正等正覺。",
        "from": "T21n1350_001:0864c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊說是經已。",
        "from": "T21n1350_001:0864c02_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八萬菩薩摩訶薩眾。",
        "from": "T21n1350_001:0864c02_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及八萬四千大梵天子。",
        "from": "T21n1350_001:0864c03_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛所說皆大歡喜信受奉行。",
        "from": "T21n1350_001:0864c04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說一切如來名號陀羅尼經",
        "from": "T21n1350_001:0864c05_100",
        "context_with_next_sentence": false
    }
]