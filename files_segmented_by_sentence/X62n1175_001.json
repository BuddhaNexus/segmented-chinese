{
    "X62n1175_001:0139c06_0": "起一心精進念佛七期規式",
    "X62n1175_001:0139c08_0": "虞山普仁院淨業比丘　行策　定",
    "X62n1175_001:0139c09_0": "事例",
    "X62n1175_001:0139c10_0": "擇清淨廣廈。",
    "X62n1175_001:0139c10_1": "以為七堂。",
    "X62n1175_001:0139c10_2": "中奉彌陀聖像。",
    "X62n1175_001:0139c10_3": "懸諸華旛。",
    "X62n1175_001:0139c10_4": "然燈燒香。",
    "X62n1175_001:0139c11_5": "七日不絕。",
    "X62n1175_001:0139c11_6": "但以香光莊嚴。",
    "X62n1175_001:0139c11_7": "如法供養。",
    "X62n1175_001:0139c11_8": "不用蔬果讚吹等。",
    "X62n1175_001:0139c12_9": "堂中左右。",
    "X62n1175_001:0139c12_10": "各設長桌一張。",
    "X62n1175_001:0139c12_11": "亦用香爐供具嚴飾之。",
    "X62n1175_001:0139c13_12": "桌外各設坐椅四張。",
    "X62n1175_001:0139c13_13": "中央向佛設長桌一張。",
    "X62n1175_001:0139c14_0": "與左右桌齊。",
    "X62n1175_001:0139c14_1": "兩橫離一二尺許。",
    "X62n1175_001:0139c14_2": "可通出入。",
    "X62n1175_001:0139c14_3": "桌上供疏文一道。",
    "X62n1175_001:0139c15_4": "大爐一座。",
    "X62n1175_001:0139c15_5": "華燭供具。",
    "X62n1175_001:0139c15_6": "須令相稱。",
    "X62n1175_001:0139c15_7": "桌外放蒲墩四箇。",
    "X62n1175_001:0139c16_8": "左右近壁。",
    "X62n1175_001:0139c16_9": "若無禪牀。",
    "X62n1175_001:0139c16_10": "則多設坐位。",
    "X62n1175_001:0139c16_11": "以便隨班退坐。",
    "X62n1175_001:0139c17_12": "其同行淨侶。",
    "X62n1175_001:0139c17_13": "定十二人。",
    "X62n1175_001:0139c17_14": "分為三班。",
    "X62n1175_001:0139c17_15": "每班四人。",
    "X62n1175_001:0139c17_16": "首位司引磬。",
    "X62n1175_001:0139c18_17": "記持佛號。",
    "X62n1175_001:0139c18_18": "以千聲為度。",
    "X62n1175_001:0139c18_19": "次位司小魚。",
    "X62n1175_001:0139c18_20": "後二位司巡察。",
    "X62n1175_001:0139c19_21": "見班中昏散者警之。",
    "X62n1175_001:0139c19_22": "中央面佛。",
    "X62n1175_001:0139c19_23": "為第一班。",
    "X62n1175_001:0139c19_24": "近西一人為班首。",
    "X62n1175_001:0139c20_25": "即是七主。",
    "X62n1175_001:0139c20_26": "右邊東向。",
    "X62n1175_001:0139c20_27": "為第二班。",
    "X62n1175_001:0139c20_28": "近上一人為班首。",
    "X62n1175_001:0139c21_29": "左邊西向。",
    "X62n1175_001:0139c21_30": "為第三班。",
    "X62n1175_001:0139c21_31": "近下一人為班首。",
    "X62n1175_001:0139c22_0": "佛前上下兩長桌上。",
    "X62n1175_001:0139c22_1": "各置引磬小魚一副。",
    "X62n1175_001:0139c22_2": "用過隨放桌上。",
    "X62n1175_001:0139c23_3": "凡七堂施設。",
    "X62n1175_001:0139c23_4": "須於隔宿。",
    "X62n1175_001:0139c23_5": "事事周備。",
    "X62n1175_001:0139c23_6": "同七緇素亦須隔日齊集。",
    "X62n1175_001:0139c24_7": "沐浴已。",
    "X62n1175_001:0139c24_8": "預請主七師。",
    "X62n1175_001:0139c24_9": "分班定位。",
    "X62n1175_001:0139c24_10": "教示演習。",
    "X62n1175_001:0140a01_11": "每班繞佛百聲。",
    "X62n1175_001:0140a01_12": "即歸位換班。",
    "X62n1175_001:0140a01_13": "於旋繞中間。",
    "X62n1175_001:0140a01_14": "驀鳴大魚六下。",
    "X62n1175_001:0140a02_15": "以代食梆。",
    "X62n1175_001:0140a02_16": "三班如法出堂。",
    "X62n1175_001:0140a02_17": "乃至齋堂旋念。",
    "X62n1175_001:0140a02_18": "止魚接板。",
    "X62n1175_001:0140a03_19": "結板接佛。",
    "X62n1175_001:0140a03_20": "歸堂旋坐。",
    "X62n1175_001:0140a03_21": "一一指教明白。",
    "X62n1175_001:0140a03_22": "令眾委悉。",
    "X62n1175_001:0140a04_23": "以期中戒語。",
    "X62n1175_001:0140a04_24": "不便指授。",
    "X62n1175_001:0140a04_25": "故須預習也。",
    "X62n1175_001:0140a04_26": "習已。",
    "X62n1175_001:0140a04_27": "各自至誠禮佛。",
    "X62n1175_001:0140a05_28": "求佛加被。",
    "X62n1175_001:0140a05_29": "令七晝夜中所作成辦。",
    "X62n1175_001:0140a05_30": "不起內外魔障。",
    "X62n1175_001:0140a06_31": "事畢早息。",
    "X62n1175_001:0140a06_32": "毋致疲勞。",
    "X62n1175_001:0140a07_0": "第一日。",
    "X62n1175_001:0140a07_1": "五更報鐘鳴。",
    "X62n1175_001:0140a07_2": "眾起盥潄畢。",
    "X62n1175_001:0140a07_3": "用湯點入。",
    "X62n1175_001:0140a07_4": "堂主七師鳴引磬。",
    "X62n1175_001:0140a08_5": "禮佛三拜。",
    "X62n1175_001:0140a08_6": "各依位立定。",
    "X62n1175_001:0140a08_7": "舉香讚誦阿彌陀經。",
    "X62n1175_001:0140a09_8": "聲須和緩。",
    "X62n1175_001:0140a09_9": "往生呪三徧。",
    "X62n1175_001:0140a09_10": "起讚佛偈。",
    "X62n1175_001:0140a09_11": "即稱佛名。",
    "X62n1175_001:0140a09_12": "中班鳴引磬二下。",
    "X62n1175_001:0140a10_13": "問訊旋繞。",
    "X62n1175_001:0140a10_14": "左右班。",
    "X62n1175_001:0140a10_15": "乃端坐默隨。",
    "X62n1175_001:0140a10_16": "若昏散重者。",
    "X62n1175_001:0140a11_17": "當微動脣齒。",
    "X62n1175_001:0140a11_18": "庶免坐忘間斷。",
    "X62n1175_001:0140a11_19": "并落昏沈。",
    "X62n1175_001:0140a11_20": "無記性中。",
    "X62n1175_001:0140a12_21": "其神氣清明者。",
    "X62n1175_001:0140a12_22": "當閉目靜聽。",
    "X62n1175_001:0140a12_23": "一心緣佛。",
    "X62n1175_001:0140a12_24": "使心中佛號。",
    "X62n1175_001:0140a13_25": "朗朗如貫珠。",
    "X62n1175_001:0140a13_26": "不雜不斷。",
    "X62n1175_001:0140a13_27": "首班旋繞畢。",
    "X62n1175_001:0140a13_28": "仍於下邊立空。",
    "X62n1175_001:0140a14_29": "於陀字上。",
    "X62n1175_001:0140a14_30": "鳴引磬一下。",
    "X62n1175_001:0140a14_31": "次班即從座起。",
    "X62n1175_001:0140a14_32": "從容出位。",
    "X62n1175_001:0140a15_0": "於佛桌邊。",
    "X62n1175_001:0140a15_1": "一行立定。",
    "X62n1175_001:0140a15_2": "首班復鳴引磬一下。",
    "X62n1175_001:0140a15_3": "又四五聲佛後。",
    "X62n1175_001:0140a16_4": "於陀佛二字上。",
    "X62n1175_001:0140a16_5": "連鳴兩下。",
    "X62n1175_001:0140a16_6": "即止佛問訊。",
    "X62n1175_001:0140a16_7": "就右邊空位坐。",
    "X62n1175_001:0140a17_8": "次班接佛問訊。",
    "X62n1175_001:0140a17_9": "旋繞如前。",
    "X62n1175_001:0140a17_10": "佛號畢。",
    "X62n1175_001:0140a17_11": "仍於上邊立定。",
    "X62n1175_001:0140a18_12": "三鳴引磬。",
    "X62n1175_001:0140a18_13": "末班起座出位。",
    "X62n1175_001:0140a18_14": "於下邊接佛旋繞。",
    "X62n1175_001:0140a18_15": "一如前式。",
    "X62n1175_001:0140a19_16": "次班復就左邊空位而坐。",
    "X62n1175_001:0140a19_17": "默隨佛號。",
    "X62n1175_001:0140a19_18": "如是三班。",
    "X62n1175_001:0140a20_19": "周而復始。",
    "X62n1175_001:0140a20_20": "從旦至暮。",
    "X62n1175_001:0140a20_21": "佛聲不絕。",
    "X62n1175_001:0140a20_22": "每稱念一千。",
    "X62n1175_001:0140a20_23": "默隨二千。",
    "X62n1175_001:0140a21_24": "旋行一千。",
    "X62n1175_001:0140a21_25": "安坐二千。",
    "X62n1175_001:0140a21_26": "庶幾身口弗疲。",
    "X62n1175_001:0140a21_27": "勞逸均等。",
    "X62n1175_001:0140a22_0": "凡旋繞畢時。",
    "X62n1175_001:0140a22_1": "但看無小魚桌邊。",
    "X62n1175_001:0140a22_2": "方乃就立。",
    "X62n1175_001:0140a22_3": "則上下永無差誤矣。",
    "X62n1175_001:0140a23_4": "十二人外。",
    "X62n1175_001:0140a23_5": "不論緇素多寡。",
    "X62n1175_001:0140a23_6": "亦分三班。",
    "X62n1175_001:0140a23_7": "行則隨行。",
    "X62n1175_001:0140a24_8": "坐則退坐。",
    "X62n1175_001:0140b01_0": "齋堂鋪設圓位三面。",
    "X62n1175_001:0140b01_1": "長桌相接。",
    "X62n1175_001:0140b01_2": "唯下方中央少空。",
    "X62n1175_001:0140b01_3": "通行堂出入。",
    "X62n1175_001:0140b02_4": "四面近壁。",
    "X62n1175_001:0140b02_5": "皆可回繞。",
    "X62n1175_001:0140b02_6": "(設位本方。",
    "X62n1175_001:0140b02_7": "而日圓者。",
    "X62n1175_001:0140b02_8": "取周帀回旋之義也)三時粥飯外。",
    "X62n1175_001:0140b03_9": "午前加食一餐。",
    "X62n1175_001:0140b03_10": "蔬菜止二簋。",
    "X62n1175_001:0140b03_11": "兩人共之。",
    "X62n1175_001:0140b04_0": "每食行食畢。",
    "X62n1175_001:0140b04_1": "鳴梆六下。",
    "X62n1175_001:0140b04_2": "(表南無阿彌陀佛)堂中聞梆聲。",
    "X62n1175_001:0140b04_3": "不論何班旋繞。",
    "X62n1175_001:0140b05_4": "如常旋念。",
    "X62n1175_001:0140b05_5": "至疏桌邊。",
    "X62n1175_001:0140b05_6": "班首置數珠於桌上。",
    "X62n1175_001:0140b06_0": "取引磬鳴二下。",
    "X62n1175_001:0140b06_1": "問訊。",
    "X62n1175_001:0140b06_2": "(若佛聲太急。",
    "X62n1175_001:0140b06_3": "即于此時。",
    "X62n1175_001:0140b06_4": "改魚緩念)左右班起立。",
    "X62n1175_001:0140b07_0": "同聲稱念。",
    "X62n1175_001:0140b07_1": "班首帶引磬。",
    "X62n1175_001:0140b07_2": "從中路向佛旋行。",
    "X62n1175_001:0140b07_3": "仍從中路出堂。",
    "X62n1175_001:0140b08_4": "若首班在前。",
    "X62n1175_001:0140b08_5": "餘兩班次第隨行。",
    "X62n1175_001:0140b08_6": "須待本班緇素行盡。",
    "X62n1175_001:0140b09_7": "次班方可接行。",
    "X62n1175_001:0140b09_8": "若值中班在前。",
    "X62n1175_001:0140b09_9": "則末班隨行。",
    "X62n1175_001:0140b09_10": "首班居後。",
    "X62n1175_001:0140b10_11": "若末班在前。",
    "X62n1175_001:0140b10_12": "則首班隨行。",
    "X62n1175_001:0140b10_13": "次班居後。",
    "X62n1175_001:0140b10_14": "不得越亂。",
    "X62n1175_001:0140b11_15": "到齋堂。",
    "X62n1175_001:0140b11_16": "右旋一帀。",
    "X62n1175_001:0140b11_17": "候末位到齊。",
    "X62n1175_001:0140b11_18": "班首即鳴引磬一下。",
    "X62n1175_001:0140b12_19": "止魚停佛。",
    "X62n1175_001:0140b12_20": "緇素隨所到處。",
    "X62n1175_001:0140b12_21": "就位坐定。",
    "X62n1175_001:0140b12_22": "不得推前遜後。",
    "X62n1175_001:0140b13_23": "不得抽身離位。",
    "X62n1175_001:0140b13_24": "隨坐隨食。",
    "X62n1175_001:0140b13_25": "不用問訊念誦出生等。",
    "X62n1175_001:0140b14_0": "旁懸板椎一副。",
    "X62n1175_001:0140b14_1": "預令沙彌立板椎邊。",
    "X62n1175_001:0140b14_2": "候小魚停止。",
    "X62n1175_001:0140b14_3": "接板念佛。",
    "X62n1175_001:0140b15_4": "每聲鳴板二下。",
    "X62n1175_001:0140b15_5": "眾等食時。",
    "X62n1175_001:0140b15_6": "一心緣佛。",
    "X62n1175_001:0140b15_7": "不可須臾放逸。",
    "X62n1175_001:0140b16_8": "食訖。",
    "X62n1175_001:0140b16_9": "班首於南字上。",
    "X62n1175_001:0140b16_10": "鳴引磬一下。",
    "X62n1175_001:0140b16_11": "沙彌即於陀佛二字上。",
    "X62n1175_001:0140b17_12": "連擊二下。",
    "X62n1175_001:0140b17_13": "結板。",
    "X62n1175_001:0140b17_14": "眾齊出位。",
    "X62n1175_001:0140b17_15": "亦不問訊。",
    "X62n1175_001:0140b17_16": "即起佛右繞歸堂。",
    "X62n1175_001:0140b18_17": "一依前次。",
    "X62n1175_001:0140b18_18": "班首行至本立處。",
    "X62n1175_001:0140b18_19": "鳴引磬二下。",
    "X62n1175_001:0140b19_20": "問訊。",
    "X62n1175_001:0140b19_21": "置於桌上。",
    "X62n1175_001:0140b19_22": "仍取數珠繞佛。",
    "X62n1175_001:0140b19_23": "餘班歸原位坐。",
    "X62n1175_001:0140b20_0": "其左班西向者。",
    "X62n1175_001:0140b20_1": "須順旋至桌邊。",
    "X62n1175_001:0140b20_2": "從末位進。",
    "X62n1175_001:0140b20_3": "毋直歸。",
    "X62n1175_001:0140b20_4": "毋逆行。",
    "X62n1175_001:0140b21_5": "凡歸位出班。",
    "X62n1175_001:0140b21_6": "及有事出入。",
    "X62n1175_001:0140b21_7": "並須安詳徐步。",
    "X62n1175_001:0140b21_8": "毋得踉蹌疾走。",
    "X62n1175_001:0140b22_9": "入夜日光初暝。",
    "X62n1175_001:0140b22_10": "供疏桌上。",
    "X62n1175_001:0140b22_11": "亦然長燭。",
    "X62n1175_001:0140b22_12": "此後約每班。",
    "X62n1175_001:0140b23_13": "兩回旋念六千佛竟。",
    "X62n1175_001:0140b23_14": "更俟下班接佛旋行時。",
    "X62n1175_001:0140b24_0": "七主出位。",
    "X62n1175_001:0140b24_1": "鳴引磬一下。",
    "X62n1175_001:0140b24_2": "堂眾皆起。",
    "X62n1175_001:0140b24_3": "同聲旋念。",
    "X62n1175_001:0140b24_4": "不復論三班緇素次序。",
    "X62n1175_001:0140c01_5": "但約旋念十數帀。",
    "X62n1175_001:0140c01_6": "後七主於下方中央。",
    "X62n1175_001:0140c02_7": "面佛立定。",
    "X62n1175_001:0140c02_8": "三鳴引磬。",
    "X62n1175_001:0140c02_9": "結小魚一陣止佛。",
    "X62n1175_001:0140c02_10": "眾皆面佛鳴引磬。",
    "X62n1175_001:0140c03_11": "同念發願偈云。",
    "X62n1175_001:0140c03_12": "弟子眾等。",
    "X62n1175_001:0140c03_13": "至心發願。",
    "X62n1175_001:0140c04_0": "　願命終時神不亂　　正念直往生安養　面奉彌陀值眾聖　　修行十地勝常樂於末後三字。",
    "X62n1175_001:0140c06_1": "緩鳴引磬三下。",
    "X62n1175_001:0140c06_2": "即禮佛三拜。",
    "X62n1175_001:0140c06_3": "歸單就寢。",
    "X62n1175_001:0140c07_0": "眾等爾時尤宜防護三業。",
    "X62n1175_001:0140c07_1": "正念寢息。",
    "X62n1175_001:0140c07_2": "不得作餘事。",
    "X62n1175_001:0140c07_3": "說餘語。",
    "X62n1175_001:0140c08_4": "起餘雜想。",
    "X62n1175_001:0140c08_5": "亦不得禮餘佛。",
    "X62n1175_001:0140c08_6": "誦餘經呪。",
    "X62n1175_001:0140c08_7": "縱有恒課。",
    "X62n1175_001:0140c09_0": "終身不缺者。",
    "X62n1175_001:0140c09_1": "亦皆停止。",
    "X62n1175_001:0140c09_2": "甯于七日。",
    "X62n1175_001:0140c09_3": "後追補之。",
    "X62n1175_001:0140c09_4": "不然則未免間斷夾雜。",
    "X62n1175_001:0140c10_5": "又烏得稱為七日持名。",
    "X62n1175_001:0140c10_6": "一心不亂乎。",
    "X62n1175_001:0140c11_0": "寢息後。",
    "X62n1175_001:0140c11_1": "兩炷官香將盡。",
    "X62n1175_001:0140c11_2": "香燈師預通厨房。",
    "X62n1175_001:0140c11_3": "辦面水湯點。",
    "X62n1175_001:0140c12_4": "即鳴報鐘。",
    "X62n1175_001:0140c12_5": "此後六日入堂禮佛已。",
    "X62n1175_001:0140c12_6": "即起讚佛偈。",
    "X62n1175_001:0140c12_7": "不誦經呪。",
    "X62n1175_001:0140c13_8": "餘皆如初日行。",
    "X62n1175_001:0140c13_9": "持期中請定護七師。",
    "X62n1175_001:0140c13_10": "二人為一期外護。",
    "X62n1175_001:0140c14_11": "凡緇素隨喜。",
    "X62n1175_001:0140c14_12": "毋令入堂。",
    "X62n1175_001:0140c14_13": "唯專為念佛來者。",
    "X62n1175_001:0140c15_0": "乃導之使入。",
    "X62n1175_001:0140c15_1": "禮佛三拜已。",
    "X62n1175_001:0140c15_2": "即送隨班旋念。",
    "X62n1175_001:0140c15_3": "或送左右班後。",
    "X62n1175_001:0140c16_4": "不得揖眾共語。",
    "X62n1175_001:0140c16_5": "若未滿期欲去。",
    "X62n1175_001:0140c16_6": "亦但禮佛而出。",
    "X62n1175_001:0140c17_0": "不用別眾緇素。",
    "X62n1175_001:0140c17_1": "於七前預到。",
    "X62n1175_001:0140c17_2": "發願終七者。",
    "X62n1175_001:0140c17_3": "必須終竟一期。",
    "X62n1175_001:0140c18_4": "不同隨喜之例。",
    "X62n1175_001:0140c18_5": "倘年高有疾。",
    "X62n1175_001:0140c18_6": "力難支遣。",
    "X62n1175_001:0140c18_7": "可密啟護七師。",
    "X62n1175_001:0140c19_8": "乞其寫帖。",
    "X62n1175_001:0140c19_9": "轉達七主。",
    "X62n1175_001:0140c19_10": "或旋行時少坐。",
    "X62n1175_001:0140c19_11": "或入夜後早息。",
    "X62n1175_001:0140c20_12": "當破格方便之。",
    "X62n1175_001:0140c20_13": "次立監直師一人。",
    "X62n1175_001:0140c20_14": "眾中有違約者。",
    "X62n1175_001:0140c21_15": "即登名記罰。",
    "X62n1175_001:0140c21_16": "不可放過。",
    "X62n1175_001:0140c21_17": "次安香燈一人。",
    "X62n1175_001:0140c21_18": "行者二人。",
    "X62n1175_001:0140c22_19": "香燈司爐火香燭之事。",
    "X62n1175_001:0140c22_20": "遇燭暗則翦。",
    "X62n1175_001:0140c22_21": "香盡則換。",
    "X62n1175_001:0140c22_22": "眾赴齋則守堂不出。",
    "X62n1175_001:0140c23_23": "眾就寢則看香定夜。",
    "X62n1175_001:0140c23_24": "須老成者充之。",
    "X62n1175_001:0140c24_25": "若疲乏時。",
    "X62n1175_001:0140c24_26": "憗與監直師。",
    "X62n1175_001:0140c24_27": "更換寢息。",
    "X62n1175_001:0140c24_28": "不可失事誤眾。",
    "X62n1175_001:0141a01_0": "行者司茶水洗沐等事。",
    "X62n1175_001:0141a01_1": "午前行茶兩次。",
    "X62n1175_001:0141a01_2": "午後不拘次數。",
    "X62n1175_001:0141a02_3": "入夜復行一次。",
    "X62n1175_001:0141a02_4": "每行畢。",
    "X62n1175_001:0141a02_5": "隨收器盪滌。",
    "X62n1175_001:0141a02_6": "俟旋念班坐定。",
    "X62n1175_001:0141a03_7": "還須補行。",
    "X62n1175_001:0141a03_8": "凡盆水浣濯。",
    "X62n1175_001:0141a03_9": "眾所需待者。",
    "X62n1175_001:0141a03_10": "皆當盡心供辦。",
    "X62n1175_001:0141a04_11": "護七師須隨時經理。",
    "X62n1175_001:0141a04_12": "毋令懈廢。",
    "X62n1175_001:0141a05_0": "滿七之日。",
    "X62n1175_001:0141a05_1": "入夜。",
    "X62n1175_001:0141a05_2": "六千佛竟。",
    "X62n1175_001:0141a05_3": "更俟下班接佛。",
    "X62n1175_001:0141a05_4": "後主七師如常鳴引磬。",
    "X62n1175_001:0141a06_5": "三班同起。",
    "X62n1175_001:0141a06_6": "旋念五百聲佛。",
    "X62n1175_001:0141a06_7": "主七師於佛桌東首。",
    "X62n1175_001:0141a07_8": "向佛立定。",
    "X62n1175_001:0141a07_9": "鳴大磬一下。",
    "X62n1175_001:0141a07_10": "眾皆面佛。",
    "X62n1175_001:0141a07_11": "鳴第三下時。",
    "X62n1175_001:0141a08_12": "隨接鐘鼓一通。",
    "X62n1175_001:0141a08_13": "鳴大魚。",
    "X62n1175_001:0141a08_14": "跪稱觀音勢至清淨海眾各十聲。",
    "X62n1175_001:0141a09_15": "如晚課例。",
    "X62n1175_001:0141a09_16": "小淨土文。",
    "X62n1175_001:0141a09_17": "回向。",
    "X62n1175_001:0141a09_18": "禮佛十二拜。",
    "X62n1175_001:0141a09_19": "菩薩三拜。",
    "X62n1175_001:0141a10_20": "三自歸畢。",
    "X62n1175_001:0141a10_21": "隨鳴大磬一下。",
    "X62n1175_001:0141a10_22": "眾相向側立。",
    "X62n1175_001:0141a10_23": "主七師至下方中央。",
    "X62n1175_001:0141a11_24": "展具禮佛長跪。",
    "X62n1175_001:0141a11_25": "眾稱南無大乘常住三寶。",
    "X62n1175_001:0141a12_26": "護七師宣疏畢。",
    "X62n1175_001:0141a12_27": "仍鳴小魚。",
    "X62n1175_001:0141a12_28": "誦往生呪。",
    "X62n1175_001:0141a12_29": "送疏。",
    "X62n1175_001:0141a12_30": "不拘徧數。",
    "X62n1175_001:0141a13_31": "結呪已。",
    "X62n1175_001:0141a13_32": "念發願偈。",
    "X62n1175_001:0141a13_33": "問訊。",
    "X62n1175_001:0141a13_34": "回至佛前。",
    "X62n1175_001:0141a13_35": "眾同展具作禮三拜。",
    "X62n1175_001:0141a14_36": "收具問訊。",
    "X62n1175_001:0141a14_37": "鳴引磬。",
    "X62n1175_001:0141a14_38": "引眾出堂。",
    "X62n1175_001:0141a14_39": "詣主七師室中。",
    "X62n1175_001:0141a14_40": "禮謝。",
    "X62n1175_001:0141a15_41": "主七師同眾。",
    "X62n1175_001:0141a15_42": "至護七師處。",
    "X62n1175_001:0141a15_43": "及諸職事師處。",
    "X62n1175_001:0141a15_44": "巡寮敘謝訖。",
    "X62n1175_001:0141a16_45": "然後歸堂圓禮。",
    "X62n1175_001:0141a16_46": "為一期事竟。",
    "X62n1175_001:0141a17_0": "罰例",
    "X62n1175_001:0141a18_0": "罰有三等。",
    "X62n1175_001:0141a18_1": "上罰錢百文。",
    "X62n1175_001:0141a18_2": "中罰五十文。",
    "X62n1175_001:0141a18_3": "下罰十文。",
    "X62n1175_001:0141a18_4": "不論錢之貴賤。",
    "X62n1175_001:0141a19_5": "準此為式。",
    "X62n1175_001:0141a19_6": "堂中懸水牌一面。",
    "X62n1175_001:0141a19_7": "置筆硯一副。",
    "X62n1175_001:0141a20_0": "有應罰者。",
    "X62n1175_001:0141a20_1": "監直師隨書牌上。",
    "X62n1175_001:0141a20_2": "書已。",
    "X62n1175_001:0141a20_3": "持示本人。",
    "X62n1175_001:0141a20_4": "令知俟期滿。",
    "X62n1175_001:0141a21_5": "結算某某罰錢若干。",
    "X62n1175_001:0141a21_6": "仍令本人買香供佛。",
    "X62n1175_001:0141a21_7": "或放生命。",
    "X62n1175_001:0141a22_8": "若無錢者。",
    "X62n1175_001:0141a22_9": "罰持往生呪。",
    "X62n1175_001:0141a22_10": "每呪十徧。",
    "X62n1175_001:0141a22_11": "準錢一文。",
    "X62n1175_001:0141a23_0": "期中。",
    "X62n1175_001:0141a23_1": "第一禁止語話。",
    "X62n1175_001:0141a23_2": "不論堂內堂外。",
    "X62n1175_001:0141a23_3": "未起佛前。",
    "X62n1175_001:0141a23_4": "已止佛後。",
    "X62n1175_001:0141a24_5": "但有犯者。",
    "X62n1175_001:0141a24_6": "一上罰。",
    "X62n1175_001:0141a24_7": "三犯者出堂。",
    "X62n1175_001:0141a24_8": "若有不得已事。",
    "X62n1175_001:0141b01_0": "必欲語。",
    "X62n1175_001:0141b01_1": "可密告護七師。",
    "X62n1175_001:0141b01_2": "一兩語即止。",
    "X62n1175_001:0141b01_3": "若多語高聲語。",
    "X62n1175_001:0141b02_0": "罰同。",
    "X62n1175_001:0141b03_0": "凡欲抽解著衣等竟。",
    "X62n1175_001:0141b03_1": "自起身事畢速還。",
    "X62n1175_001:0141b03_2": "託事在外延緩者。",
    "X62n1175_001:0141b04_3": "一下罰。",
    "X62n1175_001:0141b04_4": "若私入寮舍。",
    "X62n1175_001:0141b04_5": "坐臥片時者。",
    "X62n1175_001:0141b04_6": "上罰。",
    "X62n1175_001:0141b05_0": "有事欲出堂。",
    "X62n1175_001:0141b05_1": "須甲來乙去。",
    "X62n1175_001:0141b05_2": "甲若未還。",
    "X62n1175_001:0141b05_3": "乙須少待。",
    "X62n1175_001:0141b05_4": "或時事迫促。",
    "X62n1175_001:0141b06_5": "亦得兩人並出。",
    "X62n1175_001:0141b06_6": "若四人中。",
    "X62n1175_001:0141b06_7": "兩人已出。",
    "X62n1175_001:0141b06_8": "第三人復出者。",
    "X62n1175_001:0141b07_9": "一下罰。",
    "X62n1175_001:0141b07_10": "隨班後坐者。",
    "X62n1175_001:0141b07_11": "不拘。",
    "X62n1175_001:0141b08_0": "旋繞未竟。",
    "X62n1175_001:0141b08_1": "不得越班而出。",
    "X62n1175_001:0141b08_2": "須待歸位坐定。",
    "X62n1175_001:0141b08_3": "方可抽身。",
    "X62n1175_001:0141b09_0": "若越班出者。",
    "X62n1175_001:0141b09_1": "緇素同一中罰。",
    "X62n1175_001:0141b10_0": "上班繞佛將畢。",
    "X62n1175_001:0141b10_1": "下班不得離位。",
    "X62n1175_001:0141b10_2": "若非時出堂。",
    "X62n1175_001:0141b10_3": "以致臨班不到者。",
    "X62n1175_001:0141b11_4": "一中罰。",
    "X62n1175_001:0141b12_0": "隨班緇素當旋繞時。",
    "X62n1175_001:0141b12_1": "非年高有疾。",
    "X62n1175_001:0141b12_2": "稟白在前輒自坐。",
    "X62n1175_001:0141b13_0": "立者一下罰。",
    "X62n1175_001:0141b14_0": "若安坐時。",
    "X62n1175_001:0141b14_1": "性不耐坐。",
    "X62n1175_001:0141b14_2": "混入他班旋念者。",
    "X62n1175_001:0141b14_3": "一中罰。",
    "X62n1175_001:0141b15_0": "數數出入者。",
    "X62n1175_001:0141b15_1": "一下罰。",
    "X62n1175_001:0141b15_2": "除有疾。",
    "X62n1175_001:0141b16_0": "出班歸位。",
    "X62n1175_001:0141b16_1": "及出堂入堂。",
    "X62n1175_001:0141b16_2": "並須威儀庠序。",
    "X62n1175_001:0141b16_3": "踉蹌急遽者。",
    "X62n1175_001:0141b17_0": "一下罰。",
    "X62n1175_001:0141b18_0": "堂中行動。",
    "X62n1175_001:0141b18_1": "左旋梗眾者。",
    "X62n1175_001:0141b18_2": "一下罰。",
    "X62n1175_001:0141b19_0": "衝班出入者。",
    "X62n1175_001:0141b19_1": "一下罰。",
    "X62n1175_001:0141b20_0": "香燈師不在堂。",
    "X62n1175_001:0141b20_1": "遇燭暗香盡。",
    "X62n1175_001:0141b20_2": "左右班中首末四位。",
    "X62n1175_001:0141b20_3": "或後坐眾。",
    "X62n1175_001:0141b21_4": "俱得暫起代行。",
    "X62n1175_001:0141b21_5": "唯旋行緇素。",
    "X62n1175_001:0141b21_6": "不得翦燭添香。",
    "X62n1175_001:0141b22_0": "佇立妨後。",
    "X62n1175_001:0141b22_1": "違者一下罰。",
    "X62n1175_001:0141b23_0": "三班緇素中。",
    "X62n1175_001:0141b23_1": "有不善隨魚者。",
    "X62n1175_001:0141b23_2": "臨班須默念。",
    "X62n1175_001:0141b23_3": "或低聲念。",
    "X62n1175_001:0141b24_0": "若高聲亂眾者。",
    "X62n1175_001:0141b24_1": "一下罰。",
    "X62n1175_001:0141b24_2": "護七師當引至僻處。",
    "X62n1175_001:0141b24_3": "密啟令知。",
    "X62n1175_001:0141c02_0": "入夜止佛後。",
    "X62n1175_001:0141c02_1": "須隨眾安寢。",
    "X62n1175_001:0141c02_2": "若更禮佛持誦。",
    "X62n1175_001:0141c02_3": "作餘功行者。",
    "X62n1175_001:0141c03_4": "一中罰。",
    "X62n1175_001:0141c03_5": "香燈師應勸止。",
    "X62n1175_001:0141c03_6": "若不聽。",
    "X62n1175_001:0141c03_7": "方白監直師記罰。",
    "X62n1175_001:0141c04_0": "食時赴齋堂。",
    "X62n1175_001:0141c04_1": "隨行兩班。",
    "X62n1175_001:0141c04_2": "前後失次者。",
    "X62n1175_001:0141c04_3": "二班首各一中罰。",
    "X62n1175_001:0141c06_0": "齋堂食畢。",
    "X62n1175_001:0141c06_1": "起身抽解者。",
    "X62n1175_001:0141c06_2": "一下罰。",
    "X62n1175_001:0141c07_0": "定夜失時。",
    "X62n1175_001:0141c07_1": "致入堂後。",
    "X62n1175_001:0141c07_2": "三班旋念。",
    "X62n1175_001:0141c07_3": "未滿一回。",
    "X62n1175_001:0141c07_4": "即天明者。",
    "X62n1175_001:0141c08_0": "香燈師一下罰。",
    "X62n1175_001:0141c08_1": "入堂輒曉者。",
    "X62n1175_001:0141c08_2": "一上罰。",
    "X62n1175_001:0141c08_3": "或昏睡失香。",
    "X62n1175_001:0141c08_4": "失之太早。",
    "X62n1175_001:0141c09_5": "致眾疲乏者。",
    "X62n1175_001:0141c09_6": "一中罰。",
    "X62n1175_001:0141c10_0": "監直師隨時隨處。",
    "X62n1175_001:0141c10_1": "當為眾勤察。",
    "X62n1175_001:0141c10_2": "依式登記。",
    "X62n1175_001:0141c10_3": "若屢犯不知。",
    "X62n1175_001:0141c11_4": "或雖知不記罰。",
    "X62n1175_001:0141c11_5": "同本人之例。",
    "X62n1175_001:0141c12_0": "凡同七護七諸師。",
    "X62n1175_001:0141c12_1": "於未起七前並須熟規式。",
    "X62n1175_001:0141c12_2": "次將罰例錄出。",
    "X62n1175_001:0141c13_3": "粘客堂前。",
    "X62n1175_001:0141c13_4": "有後到緇素。",
    "X62n1175_001:0141c13_5": "先令細覧條約。",
    "X62n1175_001:0141c13_6": "方送入堂。",
    "X62n1175_001:0141c14_7": "或不解文義。",
    "X62n1175_001:0141c14_8": "當與摘要說知。",
    "X62n1175_001:0141c14_9": "若造次引送。",
    "X62n1175_001:0141c14_10": "以致入堂。",
    "X62n1175_001:0141c15_11": "昧昧動輒犯約者。",
    "X62n1175_001:0141c15_12": "護七師一下罰。",
    "X62n1175_001:0141c16_0": "此三等罰。",
    "X62n1175_001:0141c16_1": "其計二十三條。",
    "X62n1175_001:0141c16_2": "今開明記罰式。",
    "X62n1175_001:0141c16_3": "如左。",
    "X62n1175_001:0141c17_0": "犯不語禁。",
    "X62n1175_001:0141c17_1": "一上罰。",
    "X62n1175_001:0141c18_0": "多語。",
    "X62n1175_001:0141c18_1": "一上罰。",
    "X62n1175_001:0141c19_0": "高聲語。",
    "X62n1175_001:0141c19_1": "一上罰。",
    "X62n1175_001:0141c20_0": "私入寮舍坐臥。",
    "X62n1175_001:0141c20_1": "一上罰。",
    "X62n1175_001:0141c21_0": "定夜失時。",
    "X62n1175_001:0141c21_1": "一上罰。",
    "X62n1175_001:0141c22_0": "越班出堂。",
    "X62n1175_001:0141c22_1": "一中罰。",
    "X62n1175_001:0141c23_0": "非時出堂。",
    "X62n1175_001:0141c23_1": "一中罰。",
    "X62n1175_001:0141c24_0": "亂班旋念。",
    "X62n1175_001:0141c24_1": "一中罰。",
    "X62n1175_001:0142a01_0": "入夜別作功行。",
    "X62n1175_001:0142a01_1": "一中罰。",
    "X62n1175_001:0142a02_0": "隨班失次。",
    "X62n1175_001:0142a02_1": "一中罰。",
    "X62n1175_001:0142a03_0": "定夜失時。",
    "X62n1175_001:0142a03_1": "一中罰。",
    "X62n1175_001:0142a04_0": "託事久出。",
    "X62n1175_001:0142a04_1": "一下罰。",
    "X62n1175_001:0142a05_0": "接踵出堂。",
    "X62n1175_001:0142a05_1": "一下罰。",
    "X62n1175_001:0142a06_0": "臨班坐立。",
    "X62n1175_001:0142a06_1": "一下罰。",
    "X62n1175_001:0142a07_0": "數數出入。",
    "X62n1175_001:0142a07_1": "一下罰。",
    "X62n1175_001:0142a08_0": "行動急遽。",
    "X62n1175_001:0142a08_1": "一下罰。",
    "X62n1175_001:0142a09_0": "左旋梗眾。",
    "X62n1175_001:0142a09_1": "一下罰。",
    "X62n1175_001:0142a10_0": "衝班出入。",
    "X62n1175_001:0142a10_1": "一下罰。",
    "X62n1175_001:0142a11_0": "佇立妨後。",
    "X62n1175_001:0142a11_1": "一下罰。",
    "X62n1175_001:0142a12_0": "高聲亂眾。",
    "X62n1175_001:0142a12_1": "一下罰。",
    "X62n1175_001:0142a13_0": "食畢先起。",
    "X62n1175_001:0142a13_1": "一下罰。",
    "X62n1175_001:0142a14_0": "造次送人入堂。",
    "X62n1175_001:0142a14_1": "一下罰。",
    "X62n1175_001:0142a15_0": "定夜失時。",
    "X62n1175_001:0142a15_1": "一下罰。",
    "X62n1175_001:0142a16_0": "如上條例。",
    "X62n1175_001:0142a16_1": "事在必行。",
    "X62n1175_001:0142a16_2": "葢欲制止放逸。",
    "X62n1175_001:0142a16_3": "助成勝行。",
    "X62n1175_001:0142a16_4": "非好為煩刻也。",
    "X62n1175_001:0142a17_5": "行者當念。",
    "X62n1175_001:0142a17_6": "一生悠忽。",
    "X62n1175_001:0142a17_7": "止此七日精進。",
    "X62n1175_001:0142a17_8": "各須激切奮勇。",
    "X62n1175_001:0142a18_9": "不惜軀命。",
    "X62n1175_001:0142a18_10": "無論行住坐臥飲食便利。",
    "X62n1175_001:0142a18_11": "一句洪名。",
    "X62n1175_001:0142a19_12": "當如呼吸不斷。",
    "X62n1175_001:0142a19_13": "不可斯須停止。",
    "X62n1175_001:0142a19_14": "俄頃夾雜。",
    "X62n1175_001:0142a19_15": "既欲一心不亂。",
    "X62n1175_001:0142a20_16": "大非尋常念佛可比也。",
    "X62n1175_001:0142a20_17": "思之勉之。",
    "X62n1175_001:0142a21_0": "疏文(封面寫念佛七期回向發願疏。",
    "X62n1175_001:0142a21_1": "秉教修淨主七沙門某甲具緘)伏以。",
    "X62n1175_001:0142a22_2": "一心圓淨。",
    "X62n1175_001:0142a22_3": "即五濁而不違清泰之鄉。",
    "X62n1175_001:0142a22_4": "三界橫超。",
    "X62n1175_001:0142a23_0": "雖九品而豈隔庸凡之位。",
    "X62n1175_001:0142a23_1": "融勝三昧王於性海。",
    "X62n1175_001:0142a23_2": "轉第一義諦於口輪。",
    "X62n1175_001:0142a24_3": "道在人宏。",
    "X62n1175_001:0142a24_4": "佛隨機應。",
    "X62n1175_001:0142b01_0": "大清國某省某府縣某寺苾芻某甲等。",
    "X62n1175_001:0142b01_1": "即日熏沐。",
    "X62n1175_001:0142b01_2": "投誠稽首。",
    "X62n1175_001:0142b02_3": "歸命娑婆教主本師釋迦牟尼文佛。",
    "X62n1175_001:0142b02_4": "極樂世界接引導師阿彌陀佛。",
    "X62n1175_001:0142b03_5": "觀音勢至。",
    "X62n1175_001:0142b03_6": "一切聖賢。",
    "X62n1175_001:0142b03_7": "同賜慈悲。",
    "X62n1175_001:0142b04_8": "俯垂證鑒。",
    "X62n1175_001:0142b04_9": "切念。",
    "X62n1175_001:0142b04_10": "弟子某甲。",
    "X62n1175_001:0142b04_11": "與現前眾生等。",
    "X62n1175_001:0142b04_12": "生逢劫濁。",
    "X62n1175_001:0142b05_13": "報屬凡軀。",
    "X62n1175_001:0142b05_14": "三業六根既無罪而不造。",
    "X62n1175_001:0142b05_15": "五趣八難亦無苦而不嘗。",
    "X62n1175_001:0142b06_16": "暗識相傳。",
    "X62n1175_001:0142b06_17": "曾未覺悟。",
    "X62n1175_001:0142b06_18": "死生浩漫。",
    "X62n1175_001:0142b06_19": "解脫何期。",
    "X62n1175_001:0142b07_20": "所幸宿植微因。",
    "X62n1175_001:0142b07_21": "得生正信。",
    "X62n1175_001:0142b07_22": "早入彌陀願海。",
    "X62n1175_001:0142b07_23": "專修淨土法門。",
    "X62n1175_001:0142b08_24": "祈寶域以棲神。",
    "X62n1175_001:0142b08_25": "託華輪而送想。",
    "X62n1175_001:0142b08_26": "用是依經立軌。",
    "X62n1175_001:0142b09_27": "準教崇修。",
    "X62n1175_001:0142b09_28": "謹于今月某日為始。",
    "X62n1175_001:0142b09_29": "啟建一心精進念佛道場。",
    "X62n1175_001:0142b10_30": "七永日於中嚴飾堂儀。",
    "X62n1175_001:0142b10_31": "肅分班次。",
    "X62n1175_001:0142b10_32": "執持聖號。",
    "X62n1175_001:0142b11_0": "終食無違。",
    "X62n1175_001:0142b11_1": "存想洪名。",
    "X62n1175_001:0142b11_2": "須臾不離。",
    "X62n1175_001:0142b11_3": "以斯功德。",
    "X62n1175_001:0142b11_4": "回向往生。",
    "X62n1175_001:0142b12_0": "惟願阿彌陀佛。",
    "X62n1175_001:0142b12_1": "慈悲攝受。",
    "X62n1175_001:0142b12_2": "與諸聖眾。",
    "X62n1175_001:0142b12_3": "親垂接引。",
    "X62n1175_001:0142b12_4": "必令諸根寂靜。",
    "X62n1175_001:0142b13_5": "正念昭彰。",
    "X62n1175_001:0142b13_6": "須摩境現于目前。",
    "X62n1175_001:0142b13_7": "金色華敷于捨報。",
    "X62n1175_001:0142b14_8": "如經所說。",
    "X62n1175_001:0142b14_9": "願悉不虗。",
    "X62n1175_001:0142b14_10": "又願以此七日精進功德。",
    "X62n1175_001:0142b15_0": "普令眾等。",
    "X62n1175_001:0142b15_1": "斷七支惡。",
    "X62n1175_001:0142b15_2": "滅七遮罪。",
    "X62n1175_001:0142b15_3": "除七慢障。",
    "X62n1175_001:0142b15_4": "離七穢行。",
    "X62n1175_001:0142b16_0": "遊七寶池。",
    "X62n1175_001:0142b16_1": "布七淨華。",
    "X62n1175_001:0142b16_2": "具七辯才智。",
    "X62n1175_001:0142b16_3": "演七菩提分。",
    "X62n1175_001:0142b16_4": "超七方便位。",
    "X62n1175_001:0142b17_5": "證七常住果。",
    "X62n1175_001:0142b17_6": "又願以此三班淨侶十二僧伽。",
    "X62n1175_001:0142b18_0": "和合修持。",
    "X62n1175_001:0142b18_1": "所生功德。",
    "X62n1175_001:0142b18_2": "普令眾等絕三惡道。",
    "X62n1175_001:0142b18_3": "轉三重障。",
    "X62n1175_001:0142b19_0": "淨三聚戒。",
    "X62n1175_001:0142b19_1": "歷三乘位。",
    "X62n1175_001:0142b19_2": "越三界而長騖。",
    "X62n1175_001:0142b19_3": "冠三輩以高躋。",
    "X62n1175_001:0142b20_0": "深入三解脫門。",
    "X62n1175_001:0142b20_1": "圓發三如來藏。",
    "X62n1175_001:0142b20_2": "又願眾等得成佛已。",
    "X62n1175_001:0142b21_0": "坐道樹下。",
    "X62n1175_001:0142b21_1": "三七思惟。",
    "X62n1175_001:0142b21_2": "為諸眾生。",
    "X62n1175_001:0142b21_3": "說三乘法。",
    "X62n1175_001:0142b21_4": "三轉四諦十二行法輪。",
    "X62n1175_001:0142b22_5": "廣說三世十二支因緣。",
    "X62n1175_001:0142b22_6": "流轉還滅。",
    "X62n1175_001:0142b22_7": "逆順法門。",
    "X62n1175_001:0142b23_8": "究竟同趣薩婆若海。",
    "X62n1175_001:0142b23_9": "又願於此七日之中。",
    "X62n1175_001:0142b23_10": "若緇若素。",
    "X62n1175_001:0142b24_11": "若遠若近。",
    "X62n1175_001:0142b24_12": "若久若暫。",
    "X62n1175_001:0142b24_13": "若來若去。",
    "X62n1175_001:0142b24_14": "乃至執勞運力。",
    "X62n1175_001:0142c01_0": "隨喜見聞。",
    "X62n1175_001:0142c01_1": "咸出苦輪。",
    "X62n1175_001:0142c01_2": "俱生樂國。",
    "X62n1175_001:0142c01_3": "共睹須彌毫相。",
    "X62n1175_001:0142c01_4": "同瞻法界藏身。",
    "X62n1175_001:0142c02_5": "又願眾等既得往生安養。",
    "X62n1175_001:0142c02_6": "親近彌陀。",
    "X62n1175_001:0142c02_7": "乃至一切如來。",
    "X62n1175_001:0142c03_8": "悉得承事。",
    "X62n1175_001:0142c03_9": "一切佛土。",
    "X62n1175_001:0142c03_10": "悉往莊嚴。",
    "X62n1175_001:0142c03_11": "一切善友悉能隨順。",
    "X62n1175_001:0142c04_12": "一切法門悉得通達。",
    "X62n1175_001:0142c04_13": "一切眾生悉蒙度脫。",
    "X62n1175_001:0142c05_0": "一切行願悉獲圓成。",
    "X62n1175_001:0142c05_1": "虗空有盡。",
    "X62n1175_001:0142c05_2": "我願無窮。",
    "X62n1175_001:0142c05_3": "仰願三寶證知。",
    "X62n1175_001:0142c06_4": "令我等得如所願。",
    "X62n1175_001:0142c06_5": "滿菩提願。",
    "X62n1175_001:0142c09_0": " 普仁七日念佛記(附錄)",
    "X62n1175_001:0142c10_0": "金　善",
    "X62n1175_001:0142c11_0": "丁巳春。",
    "X62n1175_001:0142c11_1": "大士聖誕虞山之北普仁禪院。",
    "X62n1175_001:0142c11_2": "依彌陀經教。",
    "X62n1175_001:0142c12_0": "起七日念佛新規。",
    "X62n1175_001:0142c12_1": "爰集淨眾。",
    "X62n1175_001:0142c12_2": "不揀僧俗。",
    "X62n1175_001:0142c12_3": "其主則普仁大師。",
    "X62n1175_001:0142c13_4": "號截流道人者。",
    "X62n1175_001:0142c13_5": "其道場外護。",
    "X62n1175_001:0142c13_6": "則身葉師古衲師也。",
    "X62n1175_001:0142c14_7": "其同行緇侶。",
    "X62n1175_001:0142c14_8": "則越海在閒慧如湛月慈宏海目德容越祗尚法再應可尊也。",
    "X62n1175_001:0142c15_9": "其遙聞法。",
    "X62n1175_001:0142c15_10": "曾溯水來虞。",
    "X62n1175_001:0142c15_11": "則婁東兩僧鳴谷定慧也。",
    "X62n1175_001:0142c16_12": "其居士。",
    "X62n1175_001:0142c16_13": "則汪旅三翁鳳蕤顧公臣金水若陳千頃趙存湖翁子餘翁康成沈誕先夏子彝也。",
    "X62n1175_001:0142c18_14": "念佛為往生捷徑。",
    "X62n1175_001:0142c18_15": "觀音乃西方導師。",
    "X62n1175_001:0142c18_16": "故取諸二月十九也。",
    "X62n1175_001:0142c19_17": "其法。",
    "X62n1175_001:0142c19_18": "則選僧十二。",
    "X62n1175_001:0142c19_19": "分三班。",
    "X62n1175_001:0142c19_20": "每班四人。",
    "X62n1175_001:0142c20_0": "各有所司。",
    "X62n1175_001:0142c20_1": "十二人外。",
    "X62n1175_001:0142c20_2": "不論緇素多寡。",
    "X62n1175_001:0142c20_3": "亦分三班。",
    "X62n1175_001:0142c20_4": "隨其後一班旋繞。",
    "X62n1175_001:0142c21_5": "則兩班安坐。",
    "X62n1175_001:0142c21_6": "食時赴齋堂。",
    "X62n1175_001:0142c21_7": "依次無敢紊。",
    "X62n1175_001:0142c22_0": "坐定。",
    "X62n1175_001:0142c22_1": "佛聲初歇。",
    "X62n1175_001:0142c22_2": "小沙彌擊板。",
    "X62n1175_001:0142c22_3": "念佛以繼之。",
    "X62n1175_001:0142c22_4": "使一句洪名。",
    "X62n1175_001:0142c23_5": "不絕于心口耳間。",
    "X62n1175_001:0142c23_6": "夜分略睡。",
    "X62n1175_001:0142c23_7": "聞鐘聲鳴。",
    "X62n1175_001:0142c23_8": "齊起。",
    "X62n1175_001:0142c23_9": "凡左行者罰。",
    "X62n1175_001:0142c24_10": "越位者罰。",
    "X62n1175_001:0142c24_11": "相語者倍罰。",
    "X62n1175_001:0142c24_12": "葢嚴若軍令焉。",
    "X62n1175_001:0142c24_13": "是日也汪旋三等數人先在。",
    "X62n1175_001:0143a01_14": "予後至。",
    "X62n1175_001:0143a01_15": "聞堂中佛聲琅琅。",
    "X62n1175_001:0143a01_16": "護壇師導之而入。",
    "X62n1175_001:0143a02_17": "但禮佛。",
    "X62n1175_001:0143a02_18": "不許揖眾。",
    "X62n1175_001:0143a02_19": "輒隨班行。",
    "X62n1175_001:0143a02_20": "已而退坐。",
    "X62n1175_001:0143a03_21": "或默隨佛號。",
    "X62n1175_001:0143a03_22": "微動脣齒。",
    "X62n1175_001:0143a03_23": "或閉目靜聽。",
    "X62n1175_001:0143a03_24": "而以心隨。",
    "X62n1175_001:0143a03_25": "餘人後至者亦如之。",
    "X62n1175_001:0143a04_26": "念佛之聲。",
    "X62n1175_001:0143a04_27": "時而和緩悠揚。",
    "X62n1175_001:0143a04_28": "如一氣呼吸。",
    "X62n1175_001:0143a05_29": "緜緜不斷。",
    "X62n1175_001:0143a05_30": "至其聲之振疾。",
    "X62n1175_001:0143a05_31": "則又如猛將追敵。",
    "X62n1175_001:0143a05_32": "不盡滅不止。",
    "X62n1175_001:0143a06_33": "使雜妄無間可乘。",
    "X62n1175_001:0143a06_34": "眾魔無路可入。",
    "X62n1175_001:0143a06_35": "當其風雨晦冥。",
    "X62n1175_001:0143a07_36": "眾音振響。",
    "X62n1175_001:0143a07_37": "不復知山頭霧起。",
    "X62n1175_001:0143a07_38": "殿宇雲封。",
    "X62n1175_001:0143a07_39": "及天朗氣清。",
    "X62n1175_001:0143a08_40": "則松風謖謖。",
    "X62n1175_001:0143a08_41": "澗水潺潺。",
    "X62n1175_001:0143a08_42": "無不與念佛之聲相應和。",
    "X62n1175_001:0143a09_43": "至若雞聲唱徹。",
    "X62n1175_001:0143a09_44": "燈火熒熒。",
    "X62n1175_001:0143a09_45": "曦旭方升。",
    "X62n1175_001:0143a09_46": "香烟繚繞。",
    "X62n1175_001:0143a10_0": "曉焉而念佛也。",
    "X62n1175_001:0143a10_1": "山光乍暝。",
    "X62n1175_001:0143a10_2": "林谷幽翳。",
    "X62n1175_001:0143a10_3": "眾籟寂然。",
    "X62n1175_001:0143a10_4": "梵音獨舉。",
    "X62n1175_001:0143a11_5": "暮焉而念佛也。",
    "X62n1175_001:0143a11_6": "或則神意怡悅。",
    "X62n1175_001:0143a11_7": "一塵不染。",
    "X62n1175_001:0143a11_8": "四字孤存。",
    "X62n1175_001:0143a12_9": "此真能一心不亂者。",
    "X62n1175_001:0143a12_10": "其或矍然奮發。",
    "X62n1175_001:0143a12_11": "神若馳而心欲止。",
    "X62n1175_001:0143a13_12": "此期于一心不亂。",
    "X62n1175_001:0143a13_13": "而未能者。",
    "X62n1175_001:0143a13_14": "更有信願已堅。",
    "X62n1175_001:0143a14_0": "勝緣欣遇。",
    "X62n1175_001:0143a14_1": "塵事敦逼。",
    "X62n1175_001:0143a14_2": "魔障多端。",
    "X62n1175_001:0143a14_3": "暫爾依班。",
    "X62n1175_001:0143a14_4": "尋復離位。",
    "X62n1175_001:0143a15_0": "咨嗟悔恨。",
    "X62n1175_001:0143a15_1": "不獲終斯七日者。",
    "X62n1175_001:0143a15_2": "我大師度生方便。",
    "X62n1175_001:0143a15_3": "慈誨真切。",
    "X62n1175_001:0143a16_4": "眾等信西方之可至。",
    "X62n1175_001:0143a16_5": "幸日夕以追隨。",
    "X62n1175_001:0143a16_6": "知洪號之難思。",
    "X62n1175_001:0143a17_7": "因稱揚而感涕。",
    "X62n1175_001:0143a17_8": "嗟乎石火電光。",
    "X62n1175_001:0143a17_9": "人生百年。",
    "X62n1175_001:0143a17_10": "猶七日耳。",
    "X62n1175_001:0143a18_11": "以七日而供塵累。",
    "X62n1175_001:0143a18_12": "塵累何時了。",
    "X62n1175_001:0143a18_13": "以七日而要淨土。",
    "X62n1175_001:0143a19_14": "淨土必可期。",
    "X62n1175_001:0143a19_15": "況百年之內。",
    "X62n1175_001:0143a19_16": "其為七日也甚多。",
    "X62n1175_001:0143a19_17": "而剎那異世。",
    "X62n1175_001:0143a20_18": "其為百年也又絕少。",
    "X62n1175_001:0143a20_19": "人知百年之莫期。",
    "X62n1175_001:0143a20_20": "而不知此七日之難遘。",
    "X62n1175_001:0143a21_21": "又惟知百年之虗度。",
    "X62n1175_001:0143a21_22": "而不知彼七日之浪擲。",
    "X62n1175_001:0143a22_23": "悲夫。",
    "X62n1175_001:0143a23_0": "常熟普仁寺。",
    "X62n1175_001:0143a23_1": "截流大師。",
    "X62n1175_001:0143a23_2": "回首後。",
    "X62n1175_001:0143a23_3": "有孫狀元扶桑先生之長君翰臣。",
    "X62n1175_001:0143a24_4": "為冥司勾攝。",
    "X62n1175_001:0143a24_5": "死去。",
    "X62n1175_001:0143a24_6": "一晝夜醒。",
    "X62n1175_001:0143a24_7": "而言曰。",
    "X62n1175_001:0143b01_8": "我拘繫閻羅殿下黑暗中。",
    "X62n1175_001:0143b01_9": "忽睹光明燭天。",
    "X62n1175_001:0143b01_10": "香華布空。",
    "X62n1175_001:0143b02_11": "閻君伏地。",
    "X62n1175_001:0143b02_12": "迎西歸大師。",
    "X62n1175_001:0143b02_13": "審之即截公也。",
    "X62n1175_001:0143b02_14": "我以師光明所照。",
    "X62n1175_001:0143b03_15": "及遂得放還。",
    "X62n1175_001:0143b03_16": "同日有南關外吳氏子。",
    "X62n1175_001:0143b04_0": "病死。",
    "X62n1175_001:0143b04_1": "踰夕復活。",
    "X62n1175_001:0143b04_2": "其言所見。",
    "X62n1175_001:0143b04_3": "亦如孫子言。",
    "X62n1175_001:0143b04_4": "常熟翁叔"
}