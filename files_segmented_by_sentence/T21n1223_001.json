[
    {
        "source_sentence": "佛說無量壽佛化身大忿迅俱摩",
        "from": "T21n1223_001:0130a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羅金剛念誦瑜伽儀軌法",
        "from": "T21n1223_001:0130a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南天竺國三藏金剛智奉　詔譯",
        "from": "T21n1223_001:0130a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今順瑜伽　　金剛頂經說",
        "from": "T21n1223_001:0130a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熾盛金剛部　　西方念誦法",
        "from": "T21n1223_001:0130a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有修行者　　依此而頂受",
        "from": "T21n1223_001:0130a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先於阿闍梨　　而得灌頂已",
        "from": "T21n1223_001:0130a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次應擇淨處　　河㵎泉原中",
        "from": "T21n1223_001:0130a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "山峯阿蘭若　　仙人得道處",
        "from": "T21n1223_001:0130a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在於僧房　　清淨廣莊嚴",
        "from": "T21n1223_001:0130a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或所意樂處　　欲修悉地法",
        "from": "T21n1223_001:0130b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進而受持　　金剛諸部中",
        "from": "T21n1223_001:0130b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此法甚深奧　　真言加持力",
        "from": "T21n1223_001:0130b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏及敬愛　　想念於諸佛",
        "from": "T21n1223_001:0130b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "思惟於本尊　　真言力無比",
        "from": "T21n1223_001:0130b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能摧大障者　　纔持真言句",
        "from": "T21n1223_001:0130b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化佛從口出　　種種吉祥事",
        "from": "T21n1223_001:0130b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應念而自至　　歸命無量壽",
        "from": "T21n1223_001:0130b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願以功德力　　速得超悉地",
        "from": "T21n1223_001:0130b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣發弘誓願　　次應禮諸佛",
        "from": "T21n1223_001:0130b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及諸大菩薩　　陳說三業罪",
        "from": "T21n1223_001:0130b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我從過去世　　輪轉於生死",
        "from": "T21n1223_001:0130b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今對大聖尊　　盡心而懺悔",
        "from": "T21n1223_001:0130b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如先佛所懺　　我今亦如是",
        "from": "T21n1223_001:0130b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者次應禮　　一切諸聖眾",
        "from": "T21n1223_001:0130b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密言一禮拜　　所集禮智聚",
        "from": "T21n1223_001:0130b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如轉一切經　　除疑心決定",
        "from": "T21n1223_001:0130b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結開門印　　二羽金剛拳",
        "from": "T21n1223_001:0130b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽聲而舉印　　觸門警覺已",
        "from": "T21n1223_001:0130b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能摧內外魔真言曰。",
        "from": "T21n1223_001:0130b27_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "軍吒持水印　　定手先平舒",
        "from": "T21n1223_001:0130b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪押忍戒甲　　密明加七遍",
        "from": "T21n1223_001:0130c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執持楊柳枝　　自身內外間",
        "from": "T21n1223_001:0130c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淨除煩惱垢　　灑淨真言曰",
        "from": "T21n1223_001:0130c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛部半開敷　　進力輔忍願",
        "from": "T21n1223_001:0130c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智進力下　　當心想如來",
        "from": "T21n1223_001:0130c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "密言曰。",
        "from": "T21n1223_001:0130c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華三昧印　　十度散微屈",
        "from": "T21n1223_001:0130c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "檀慧禪智合　　一心應想念",
        "from": "T21n1223_001:0130c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八葉觀自在　　密真言曰",
        "from": "T21n1223_001:0130c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結金剛部　　二羽反相背",
        "from": "T21n1223_001:0130c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智檀慧鉤　　心想執金剛",
        "from": "T21n1223_001:0130c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護身內相叉　　忍願建如幢",
        "from": "T21n1223_001:0130c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "進力附如鉤　　禪智押戒方",
        "from": "T21n1223_001:0130c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "印五處成甲　　真言",
        "from": "T21n1223_001:0130c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當地界印　　忍戒繞方願",
        "from": "T21n1223_001:0130c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入掌禪智合　　并檀慧進力",
        "from": "T21n1223_001:0130c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禪智二著地真言曰。",
        "from": "T21n1223_001:0130c26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方隅金剛牆　　前印開禪智",
        "from": "T21n1223_001:0130c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "側竪如牆形真言曰。",
        "from": "T21n1223_001:0131a01_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次當請本尊　　定慧內相叉",
        "from": "T21n1223_001:0131a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "合腕中節出　　智竪成請召",
        "from": "T21n1223_001:0131a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "辟除障難者　　右慧押智度",
        "from": "T21n1223_001:0131a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三股形叉腰　　定拳頂上旋",
        "from": "T21n1223_001:0131a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左右成結界真言曰。",
        "from": "T21n1223_001:0131a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "網印準前牆　　禪智捻進力",
        "from": "T21n1223_001:0131a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根側頂三旋　　成彼上方網",
        "from": "T21n1223_001:0131a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火院慧掩定　　竪禪智右旋",
        "from": "T21n1223_001:0131a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三匝成猛焰真言曰。",
        "from": "T21n1223_001:0131a20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結獻華座　　二羽捧蓮形",
        "from": "T21n1223_001:0131a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "微屈開八葉真言曰。",
        "from": "T21n1223_001:0131a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩日囉二合摩攞野娑嚩二合賀引獻閼伽水真言曰。",
        "from": "T21n1223_001:0131a25_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香舒定掌　　慧手握右腕",
        "from": "T21n1223_001:0131a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻華仰相叉　　風合二空附",
        "from": "T21n1223_001:0131b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒香背竪合　　禪智附進力",
        "from": "T21n1223_001:0131b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獻食仰相合　　微屈火風輪",
        "from": "T21n1223_001:0131b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二空附風側真言曰。",
        "from": "T21n1223_001:0131b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈印定為拳　　忍竪禪指捻",
        "from": "T21n1223_001:0131b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "虛空普供養　　金剛掌安頂",
        "from": "T21n1223_001:0131b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "運心周法界真言曰。",
        "from": "T21n1223_001:0131b16_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次以清雅音　　讚歎於聖尊",
        "from": "T21n1223_001:0131b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結頂髮印　　定拳進禪捻",
        "from": "T21n1223_001:0131b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安坐不動搖　　等引而相應",
        "from": "T21n1223_001:0131b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自心華內　　威光盛日輪",
        "from": "T21n1223_001:0131b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吽字成獨股　　變成忿怒尊",
        "from": "T21n1223_001:0131b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右直左微屈　　蹴踏於青蓮",
        "from": "T21n1223_001:0131c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身色如黃雲　　髮赤直竪上",
        "from": "T21n1223_001:0131c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瓔珞以嚴身　　縵跨用虎皮",
        "from": "T21n1223_001:0131c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舉慧上執杵　　定下施無畏",
        "from": "T21n1223_001:0131c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧伏天魔軍　　神通力無比",
        "from": "T21n1223_001:0131c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初說真言句　　五色祥雲現",
        "from": "T21n1223_001:0131c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "化佛遍虛空　　諸天來散華",
        "from": "T21n1223_001:0131c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乾闥緊那羅　　二十八部眾",
        "from": "T21n1223_001:0131c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及餘諸大仙　　恭敬合掌禮",
        "from": "T21n1223_001:0131c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諦想心不亂　　金剛童子大",
        "from": "T21n1223_001:0131c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心持神契　　慧手虛心拳",
        "from": "T21n1223_001:0131c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方苾於願背　　力句方便指",
        "from": "T21n1223_001:0131c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "方押智指背　　智押慧亦然",
        "from": "T21n1223_001:0131c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頭指建如幢　　由是加持故",
        "from": "T21n1223_001:0131c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能攝自在力　　無過勝上句",
        "from": "T21n1223_001:0131c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忿怒心密印　　虛合於二羽",
        "from": "T21n1223_001:0131c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水交入虎口　　風鉤捻空下",
        "from": "T21n1223_001:0131c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地輪竪如牙　　真實大悲心",
        "from": "T21n1223_001:0131c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "拔濟三塗苦　　速得成悉地",
        "from": "T21n1223_001:0131c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次破不祥契　　內叉地水輪",
        "from": "T21n1223_001:0132a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火屈而背甲　　風空竪契成",
        "from": "T21n1223_001:0132a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "經行及安寢　　存心結念時",
        "from": "T21n1223_001:0132a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "災障惡夢消　　次神通互用",
        "from": "T21n1223_001:0132a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "前印開二風　　成就金剛法",
        "from": "T21n1223_001:0132a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達自在門　　主神亂錄契",
        "from": "T21n1223_001:0132a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地輪外相交　　風鉤二地輪",
        "from": "T21n1223_001:0132a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火水並竪合　　二空持火峯",
        "from": "T21n1223_001:0132a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纔結加持故　　天樂供養雲",
        "from": "T21n1223_001:0132a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心成真實　　威怒定諸魔",
        "from": "T21n1223_001:0132a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水交出火風　　火風屈成拳",
        "from": "T21n1223_001:0132a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地空竪舉心　　密契威神力",
        "from": "T21n1223_001:0132a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "摧猛獸利牙　　怨魔莫能敵",
        "from": "T21n1223_001:0132a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次結錄王印　　準前之亂錄",
        "from": "T21n1223_001:0132a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二空捻水根　　役使於四王",
        "from": "T21n1223_001:0132a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大力善神等　　震動大千界",
        "from": "T21n1223_001:0132a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛王護身　　火屈右空押",
        "from": "T21n1223_001:0132a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "水持於空輪　　地苾在水背",
        "from": "T21n1223_001:0132a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請召於金剛　　令得堅固身",
        "from": "T21n1223_001:0132a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不壞於三界　　能護於行者",
        "from": "T21n1223_001:0132a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欲治身心病　　定慧金剛拳",
        "from": "T21n1223_001:0132a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風輪頭合圓　　二空安火側",
        "from": "T21n1223_001:0132a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言七遍稱　　瞋心想念時",
        "from": "T21n1223_001:0132a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鬼神為障者　　摧伏而退散",
        "from": "T21n1223_001:0132a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛歡喜印　　右羽虛心拳",
        "from": "T21n1223_001:0132b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空押水風背　　檀忍舒印成",
        "from": "T21n1223_001:0132b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "名金剛常念　　諸天及世間",
        "from": "T21n1223_001:0132b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "敬愛生隨喜　　能摧內外障",
        "from": "T21n1223_001:0132b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次金剛掌叉　　慧手獨股形",
        "from": "T21n1223_001:0132b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願方入於掌　　智慧而散開",
        "from": "T21n1223_001:0132b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "旋轉舉成印　　忿怒金剛叉",
        "from": "T21n1223_001:0132b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如敵戰修羅　　心真言曰",
        "from": "T21n1223_001:0132b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "珠合於掌中　　真言以加持",
        "from": "T21n1223_001:0132b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者念誦畢　　捧珠發大願",
        "from": "T21n1223_001:0132b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結三摩地印　　入法界三昧",
        "from": "T21n1223_001:0132b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修旋陀羅尼　　諸法本不生",
        "from": "T21n1223_001:0132b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自性離言說　　清淨無垢染",
        "from": "T21n1223_001:0132b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因業等虛空　　旋復諦思惟",
        "from": "T21n1223_001:0132b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "字字悟真實　　初後雖差別",
        "from": "T21n1223_001:0132b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所證皆歸一　　不捨是三昧",
        "from": "T21n1223_001:0132b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼住無緣悲　　普願諸有情",
        "from": "T21n1223_001:0132b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "同得如是地　　出定結根本",
        "from": "T21n1223_001:0132b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本明七遍已　　普供妙讚揚",
        "from": "T21n1223_001:0132b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "火院及結界　　頂左旋成解",
        "from": "T21n1223_001:0132b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎請向外撥　　加蘖車蘖車",
        "from": "T21n1223_001:0132b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當結金剛縛　　二火如蓮形",
        "from": "T21n1223_001:0132c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從心至面散　　頂上合蓮掌",
        "from": "T21n1223_001:0132c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如前再護身　　普禮諸聖眾",
        "from": "T21n1223_001:0132c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨意任經行　　略陳於護摩",
        "from": "T21n1223_001:0132c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成就悉地法　　爐對曼荼羅",
        "from": "T21n1223_001:0132c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "相望而別作　　方圓隨所求",
        "from": "T21n1223_001:0132c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "半爐熾炭充　　以酥密安悉",
        "from": "T21n1223_001:0132c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "芥子檀薰陸　　沈蘇合白膠",
        "from": "T21n1223_001:0132c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乳粥和香藥　　團為一百八",
        "from": "T21n1223_001:0132c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸法廣如經　　一呪一擲火",
        "from": "T21n1223_001:0132c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本尊并薄落　　喜歡滿祈願",
        "from": "T21n1223_001:0132c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復次以乳粥　　白芥子胡麻",
        "from": "T21n1223_001:0132c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "粳米雄黃等　　白汁木和酥",
        "from": "T21n1223_001:0132c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "擲爐得現驗　　使者火食法",
        "from": "T21n1223_001:0132c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "酥密乳酪等　　薰陸白膠香",
        "from": "T21n1223_001:0132c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胡蘿蔔粳米　　求樓香沙糖",
        "from": "T21n1223_001:0132c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "石密柏葉等　　和擣一百八",
        "from": "T21n1223_001:0132c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每團一呪擲　　入爐供使者",
        "from": "T21n1223_001:0132c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天龍夜叉　　乾闥阿蘇羅",
        "from": "T21n1223_001:0132c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四王眷屬等　　及頻那夜迦",
        "from": "T21n1223_001:0132c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜隨加護　　月八或十五",
        "from": "T21n1223_001:0132c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常設爐供養　　種種華香食",
        "from": "T21n1223_001:0132c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次畫本尊像　　長一尺五寸",
        "from": "T21n1223_001:0133a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而作丁字立　　足踏青蓮華",
        "from": "T21n1223_001:0133a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身作黃雲色　　髮赤上繚亂",
        "from": "T21n1223_001:0133a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種諸瓔珞　　環玔以嚴身",
        "from": "T21n1223_001:0133a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用虎皮縵跨　　左執拔折羅",
        "from": "T21n1223_001:0133a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右下施無畏　　當作極迅形",
        "from": "T21n1223_001:0133a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左畫一金剛　　四臂黃雲色",
        "from": "T21n1223_001:0133a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "執杵輪索刀　　右兩臂使者",
        "from": "T21n1223_001:0133a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一手作拳印　　次持劫鉢羅",
        "from": "T21n1223_001:0133a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腰臂胯龍纏　　前俱摩羅眾",
        "from": "T21n1223_001:0133a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "八部眾圍繞　　上五色祥雲",
        "from": "T21n1223_001:0133a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天散妙華　　忉利天王軍",
        "from": "T21n1223_001:0133a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四王各使者　　及頻那夜迦",
        "from": "T21n1223_001:0133a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆請命奉教　　畫人淨齋戒",
        "from": "T21n1223_001:0133a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次別畫像法　　身五尺八寸",
        "from": "T21n1223_001:0133a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "形作紅蓮色　　眼長於二寸",
        "from": "T21n1223_001:0133a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "衣服赭黃色　　脚踏金蓮華",
        "from": "T21n1223_001:0133a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右手拔折羅　　舉上如擬勢",
        "from": "T21n1223_001:0133a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左持金蓮華　　髮少黃右旋",
        "from": "T21n1223_001:0133a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "獨髮籠頭冠　　髮上際二寸",
        "from": "T21n1223_001:0133a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "髮中立化佛　　右錫左澡鑵",
        "from": "T21n1223_001:0133a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩邊背一佛　　持錫杖金色",
        "from": "T21n1223_001:0133a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者遶其身　　急雲五色光",
        "from": "T21n1223_001:0133a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法念誦時　　對像作遍數",
        "from": "T21n1223_001:0133a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如經之所說　　悲愍於有情",
        "from": "T21n1223_001:0133a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起於忿怒　　金剛即為現",
        "from": "T21n1223_001:0133a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "極忿迅之身　　能令見者怖",
        "from": "T21n1223_001:0133a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者一切時　　清淨身語意",
        "from": "T21n1223_001:0133a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大忿怒金剛童子念誦瑜伽法一卷",
        "from": "T21n1223_001:0133b01_100",
        "context_with_next_sentence": false
    }
]