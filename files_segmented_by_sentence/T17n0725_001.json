[
    {
        "source_sentence": "佛說六道伽陀經",
        "from": "T17n0725_001:0452c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天中印度摩伽陀國那爛陀寺",
        "from": "T17n0725_001:0452c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三藏傳教大師賜紫沙門臣法天",
        "from": "T17n0725_001:0452c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸命一切佛，　　及諸菩薩眾，",
        "from": "T17n0725_001:0452c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願開正智慧，　　憶念佛功德。",
        "from": "T17n0725_001:0452c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歸依三界尊，　　身口意三業，",
        "from": "T17n0725_001:0452c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作善不善，　　為彼作分別。",
        "from": "T17n0725_001:0452c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼人受果報，　　無有主宰者，",
        "from": "T17n0725_001:0452c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三界天中尊，　　願起於悲智，",
        "from": "T17n0725_001:0452c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣為世間說，　　我今聞彼說。",
        "from": "T17n0725_001:0452c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如依於輪迴，　　觀察業果報，",
        "from": "T17n0725_001:0452c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說惡道因，　　貪瞋癡為本。",
        "from": "T17n0725_001:0452c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人行殺害，　　彼業隨纏縛，",
        "from": "T17n0725_001:0452c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定墮等活，　　五百歲方出。",
        "from": "T17n0725_001:0452c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼彼等活者，　　重重受生死，",
        "from": "T17n0725_001:0452c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故說等活。",
        "from": "T17n0725_001:0452c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眷屬善知識，　　欺慢若憎嫌，",
        "from": "T17n0725_001:0452c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮落於黑繩。",
        "from": "T17n0725_001:0452c22_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "纏縛有情體，　　如鋸解樹木，",
        "from": "T17n0725_001:0452c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是故名黑繩。",
        "from": "T17n0725_001:0452c24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛火競來燒，　　焰焰相接續，",
        "from": "T17n0725_001:0452c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼罪業人，　　奔聚都一處，",
        "from": "T17n0725_001:0452c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒燃苦惱深，　　是故說炎熱。",
        "from": "T17n0725_001:0452c27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修習非法行，　　惱亂於大眾，",
        "from": "T17n0725_001:0452c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "說彼無有盡，　　墮彼極炎熱。",
        "from": "T17n0725_001:0452c29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入此惡道已，　　熾極火燒煮，",
        "from": "T17n0725_001:0453a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "熱苦受長時，　　是名極炎熱。",
        "from": "T17n0725_001:0453a02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猪羊狼兔等，　　及餘諸物命，",
        "from": "T17n0725_001:0453a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是行殺害，　　而墮於眾合。",
        "from": "T17n0725_001:0453a04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮彼惡趣已，　　眾山合身碎，",
        "from": "T17n0725_001:0453a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛苦不可當，　　故得名眾合。",
        "from": "T17n0725_001:0453a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起身口意，　　而發諸煩惱，",
        "from": "T17n0725_001:0453a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "欺誑於有情，　　墮落於號叫。",
        "from": "T17n0725_001:0453a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入彼惡道已，　　暴惡火燒身，",
        "from": "T17n0725_001:0453a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叫苦聲不絕，　　是故名號叫。",
        "from": "T17n0725_001:0453a10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖賢淨行師，　　所有財寶等，",
        "from": "T17n0725_001:0453a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若貪若偷盜，　　而墮大號叫。",
        "from": "T17n0725_001:0453a12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若諸偷盜業，　　感大火燒身，",
        "from": "T17n0725_001:0453a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "叫喚出大聲，　　是名大號叫。",
        "from": "T17n0725_001:0453a14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作大功德人，　　及與父母等，",
        "from": "T17n0725_001:0453a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "毀謗而返恩，　　決定墮無間。",
        "from": "T17n0725_001:0453a16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持罰骨髓碎，　　受苦純無間，",
        "from": "T17n0725_001:0453a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身命報等爾，　　是故名無間。",
        "from": "T17n0725_001:0453a18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相愛憎嫉，　　并及相殺害，",
        "from": "T17n0725_001:0453a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "感彼惡趣身，　　手生鋒刃甲，",
        "from": "T17n0725_001:0453a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是鐵爪甲，　　甲長十六指，",
        "from": "T17n0725_001:0453a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暴惡熾焱身，　　抓擭相損害，",
        "from": "T17n0725_001:0453a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故名鋒刃甲。",
        "from": "T17n0725_001:0453a23_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "登彼鐵叉樹，　　大身鐵牙鬼，",
        "from": "T17n0725_001:0453a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "醜惡身炎熾，　　逼惱恒無盡。",
        "from": "T17n0725_001:0453a25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復有鐵烏鳥，　　獯狐諸惡獸，",
        "from": "T17n0725_001:0453a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "食啗彼有情。",
        "from": "T17n0725_001:0453a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "割截於罪人，　　叫喚出惡聲，",
        "from": "T17n0725_001:0453a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛苦不可忍。",
        "from": "T17n0725_001:0453a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吞食熱鐵丸，　　而復飲洋銅，",
        "from": "T17n0725_001:0453b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重重無暫住。",
        "from": "T17n0725_001:0453b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鐵牙惡獸等，　　來食身上肉，",
        "from": "T17n0725_001:0453b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "受苦俱胝歲。",
        "from": "T17n0725_001:0453b04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮入洋銅河，　　大熾洋銅汁，",
        "from": "T17n0725_001:0453b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒煮或浮沈。",
        "from": "T17n0725_001:0453b06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "勸作非法行，　　往彼鐵輪獄，",
        "from": "T17n0725_001:0453b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而被鐵火輪，　　碾拶身無數，",
        "from": "T17n0725_001:0453b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或以鐵磨磨，　　或上刀山等。",
        "from": "T17n0725_001:0453b09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人說邪道，　　破正法為非，",
        "from": "T17n0725_001:0453b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滿道排鋒刃，　　令彼往來行，",
        "from": "T17n0725_001:0453b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "業力令身大，　　驅逐聚一處，",
        "from": "T17n0725_001:0453b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四面山石合，　　如指甲拶虱。",
        "from": "T17n0725_001:0453b13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若壞修習行，　　遠離正等因，",
        "from": "T17n0725_001:0453b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "僻執心意邪，　　定入由增獄。",
        "from": "T17n0725_001:0453b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "暴惡蛆蟲類，　　恒居糞穢中，",
        "from": "T17n0725_001:0453b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪者遊履時，　　食啗於雙足。",
        "from": "T17n0725_001:0453b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種植壓油等，　　蠕動多傷殺，",
        "from": "T17n0725_001:0453b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "重重臥鐵槽，　　熱鐵棒捶打。",
        "from": "T17n0725_001:0453b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若起極瞋怒，　　造彼諸惡罪，",
        "from": "T17n0725_001:0453b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死墮焰魔剎，　　具受一切苦。",
        "from": "T17n0725_001:0453b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "破結善種子，　　身口意俱罪，",
        "from": "T17n0725_001:0453b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智者勿作罪，　　地獄相如是。",
        "from": "T17n0725_001:0453b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "地獄品頌竟。",
        "from": "T17n0725_001:0453b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "牛驢猿猴等，　　鳩鴿鵝鴨身，",
        "from": "T17n0725_001:0453b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行恚與貪婬，　　獲報斯如是。",
        "from": "T17n0725_001:0453b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "犲狼猛虎犳，　　蝮蝎及毒蛇，",
        "from": "T17n0725_001:0453b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "瞋忿我慢深，　　獲報斯如是。",
        "from": "T17n0725_001:0453b28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "烏鵲鵰鷲等，　　蜈蚣路多蟲，",
        "from": "T17n0725_001:0453b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "羆熊猫牛馬，　　龍魚㜸路荼，",
        "from": "T17n0725_001:0453c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是傍生等，　　增益惡三業，",
        "from": "T17n0725_001:0453c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墜墮焰魔界，　　獲報斯如是。",
        "from": "T17n0725_001:0453c03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傍生品頌竟。",
        "from": "T17n0725_001:0453c04_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "障他布施福，　　偷盜於飲食，",
        "from": "T17n0725_001:0453c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮在布怛那，　　飢虛為餓鬼。",
        "from": "T17n0725_001:0453c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "愚癡慳鄙人，　　我慢乏禮樂，",
        "from": "T17n0725_001:0453c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求食又無慚，　　死為大癭鬼。",
        "from": "T17n0725_001:0453c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自不行檀度，　　勸他作慳貪，",
        "from": "T17n0725_001:0453c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而墮餓鬼中，　　腹大咽如針。",
        "from": "T17n0725_001:0453c10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳貪深厚者，　　護財如眼睛，",
        "from": "T17n0725_001:0453c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "貧病與佛僧，　　不能施少分，",
        "from": "T17n0725_001:0453c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦復不自用，　　父母莫能得，",
        "from": "T17n0725_001:0453c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死墮餓鬼身，　　漿飲永不遇。",
        "from": "T17n0725_001:0453c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若盜他財物，　　施已心生悔，",
        "from": "T17n0725_001:0453c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦墮餓鬼身，　　常食於膿唾。",
        "from": "T17n0725_001:0453c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "口出惡言語，　　謗毀於賢善，",
        "from": "T17n0725_001:0453c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮彼餓鬼中，　　口生於火炬。",
        "from": "T17n0725_001:0453c18_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳貪與諍訟，　　惡意窺他財，",
        "from": "T17n0725_001:0453c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮彼餓鬼中，　　微獲祭祀食，",
        "from": "T17n0725_001:0453c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或入聚落處，　　見彼遺棄食，",
        "from": "T17n0725_001:0453c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嘔吐涎唾等，　　而恒為美饌。",
        "from": "T17n0725_001:0453c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自行慳障礙，　　離間他行施，",
        "from": "T17n0725_001:0453c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為鬼恭槃荼，　　惡形生膿血。",
        "from": "T17n0725_001:0453c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "傷殺群生類，　　自食與他食，",
        "from": "T17n0725_001:0453c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮鬼羅剎娑，　　愛食鬘香粖。",
        "from": "T17n0725_001:0453c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然施飲食，　　少分懷瞋恚，",
        "from": "T17n0725_001:0453c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮鬼健闥婆，　　作樂諸天愛。",
        "from": "T17n0725_001:0453c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若愛於兩舌，　　鬪亂行瞋恚，",
        "from": "T17n0725_001:0453c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮鬼畢舍佐，　　頭面而醜惡。",
        "from": "T17n0725_001:0454a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖愛行檀施，　　而恒苦惱人，",
        "from": "T17n0725_001:0454a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮彼惡趣中，　　為彼母馱鬼。",
        "from": "T17n0725_001:0454a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自行猛利殺，　　教他猛利殺，",
        "from": "T17n0725_001:0454a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮彼藥叉身，　　亦復惡猛利。",
        "from": "T17n0725_001:0454a05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母師長等，　　所欲多違背，",
        "from": "T17n0725_001:0454a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "墮彼藥叉宮，　　勇健行暴惡。",
        "from": "T17n0725_001:0454a07_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慳貪瞋果報，　　餓鬼藥叉等，",
        "from": "T17n0725_001:0454a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦樂隨自因，　　諸惡不須作。",
        "from": "T17n0725_001:0454a09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "餓鬼品頌竟。",
        "from": "T17n0725_001:0454a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "天及修羅人，　　福壽有差等，",
        "from": "T17n0725_001:0454a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "樂求生天者，　　堅持八齋戒，",
        "from": "T17n0725_001:0454a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "快樂壽命長，　　遠離疾病苦。",
        "from": "T17n0725_001:0454a13_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於禁若破犯，　　少分樂生天，",
        "from": "T17n0725_001:0454a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而墮於修羅，　　部多為眷屬。",
        "from": "T17n0725_001:0454a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖不盜他財，　　纖毫不行施，",
        "from": "T17n0725_001:0454a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悋惜廣慳貪，　　而為守財鬼。",
        "from": "T17n0725_001:0454a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不盜亦不施，　　不慳亦不貪，",
        "from": "T17n0725_001:0454a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決定得人身，　　衣食多辛苦。",
        "from": "T17n0725_001:0454a19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不盜不貪瞋，　　守分而安住，",
        "from": "T17n0725_001:0454a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "美味施聖賢，　　彼得生人世，",
        "from": "T17n0725_001:0454a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "壽命具色力，　　吉祥而無病。",
        "from": "T17n0725_001:0454a22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恒時行施食，　　淨信具慚愧，",
        "from": "T17n0725_001:0454a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得富貴端嚴，　　廣饒資畜等。",
        "from": "T17n0725_001:0454a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若施田宅等，　　及造僧伽藍，",
        "from": "T17n0725_001:0454a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼心歡喜，　　於自彼身中，",
        "from": "T17n0725_001:0454a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切隨所欲，　　若施於鞋履，",
        "from": "T17n0725_001:0454a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "供養佛僧等，　　遊行得安樂，",
        "from": "T17n0725_001:0454a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常獲車騎乘。",
        "from": "T17n0725_001:0454a29_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "施水作泉井，　　而復作陰涼，",
        "from": "T17n0725_001:0454b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼無疲渴，　　當獲於妙花，",
        "from": "T17n0725_001:0454b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "吉祥廣嚴飾，　　柔軟身圓滿。",
        "from": "T17n0725_001:0454b03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若於傳法人，　　捨施童子等，",
        "from": "T17n0725_001:0454b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後復得為人，　　聰明多智慧。",
        "from": "T17n0725_001:0454b05_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若施於藥餌，　　當離一切病，",
        "from": "T17n0725_001:0454b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若施於燈明，　　眼目長清淨，",
        "from": "T17n0725_001:0454b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若施於音樂，　　口生美妙音，",
        "from": "T17n0725_001:0454b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若施臥具等，　　當感身安樂，",
        "from": "T17n0725_001:0454b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若施傍類食，　　長壽多色力，",
        "from": "T17n0725_001:0454b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若放女出家，　　眷屬獲增長，",
        "from": "T17n0725_001:0454b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若以田地施，　　得花菓流泉。",
        "from": "T17n0725_001:0454b12_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若怖於輪迴，　　親覲於賢聖，",
        "from": "T17n0725_001:0454b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所須隨供養，　　精進常恭敬，",
        "from": "T17n0725_001:0454b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善破於煩惱，　　當得安樂果。",
        "from": "T17n0725_001:0454b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲愍不慳悋，　　輟己而施他，",
        "from": "T17n0725_001:0454b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "定感富饒果，　　衣食自豐足。",
        "from": "T17n0725_001:0454b17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如彼四時中，　　隨時行布施，",
        "from": "T17n0725_001:0454b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "崇重具儀式，　　當獲一切福。",
        "from": "T17n0725_001:0454b19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "偷盜他財物，　　自己作所須，",
        "from": "T17n0725_001:0454b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "違背於真空，　　煩惱不捨離。",
        "from": "T17n0725_001:0454b21_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不作有相心，　　依如行布施，",
        "from": "T17n0725_001:0454b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是布施果，　　無為大安樂。",
        "from": "T17n0725_001:0454b23_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如人離婬慾，　　童男等不生，",
        "from": "T17n0725_001:0454b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠出至他方，　　無思無罣礙。",
        "from": "T17n0725_001:0454b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人著婬慾，　　心行無返復，",
        "from": "T17n0725_001:0454b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "狂亂自耽著，　　永墮於三塗。",
        "from": "T17n0725_001:0454b27_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "嫌棄於女人，　　修戒薄癡愛，",
        "from": "T17n0725_001:0454b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復至命終時，　　猶如破毒氣。",
        "from": "T17n0725_001:0454b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行正等因，　　不捨於梵行，",
        "from": "T17n0725_001:0454c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "精進得吉祥，　　天人恒供養。",
        "from": "T17n0725_001:0454c02_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "堅固不迷亂，　　無飲酒妄言，",
        "from": "T17n0725_001:0454c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出語常真實，　　獲名聞安樂。",
        "from": "T17n0725_001:0454c04_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種造飲食，　　供養和合眾，",
        "from": "T17n0725_001:0454c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當感善眷屬，　　同生不動國。",
        "from": "T17n0725_001:0454c06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "互相作承事，　　歡喜意無違，",
        "from": "T17n0725_001:0454c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀察諦理空，　　不欺不顛倒，",
        "from": "T17n0725_001:0454c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苦惱永已盡，　　安樂而解脫。",
        "from": "T17n0725_001:0454c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若好於戲論，　　歌舞著頑愚，",
        "from": "T17n0725_001:0454c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我慢恃端嚴，　　欺󰖷於貧賤，",
        "from": "T17n0725_001:0454c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當受背傴身，　　瘖瘂形痤陋，",
        "from": "T17n0725_001:0454c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "疾病鎮纏縛，　　語言而不遜，",
        "from": "T17n0725_001:0454c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪苦轉彌深，　　無因得安樂。",
        "from": "T17n0725_001:0454c14_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "寂靜心恬澹，　　一切善出生，",
        "from": "T17n0725_001:0454c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "報應果不虛，　　速成離苦道。",
        "from": "T17n0725_001:0454c16_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人趣品頌竟。",
        "from": "T17n0725_001:0454c17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諂誑行毀禁，　　毒害鬪諍深，",
        "from": "T17n0725_001:0454c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣縱於無明，　　必墮修羅趣。",
        "from": "T17n0725_001:0454c19_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "修羅品頌竟。",
        "from": "T17n0725_001:0454c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "棄名利歡樂，　　遠離於親眷，",
        "from": "T17n0725_001:0454c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持禁中下品，　　生彼四王天。",
        "from": "T17n0725_001:0454c22_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "父母親族等，　　種種作供養，",
        "from": "T17n0725_001:0454c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遠諍奉律儀，　　獲生忉利天。",
        "from": "T17n0725_001:0454c24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈喜無傷殺，　　和顏離愛憎，",
        "from": "T17n0725_001:0454c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "純善守尸羅，　　得生夜摩界。",
        "from": "T17n0725_001:0454c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "多聞持法教，　　修慧求解脫，",
        "from": "T17n0725_001:0454c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "積德具威儀，　　獲生於覩史。",
        "from": "T17n0725_001:0454c28_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若人自出家，　　布施堅持戒，",
        "from": "T17n0725_001:0454c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令彼大安樂，　　得生變化天。",
        "from": "T17n0725_001:0455a01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上根有情類，　　持戒亦最上，",
        "from": "T17n0725_001:0455a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "功德超越前，　　生他化自在。",
        "from": "T17n0725_001:0455a03_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持戒生天上，　　禪定亦如是，",
        "from": "T17n0725_001:0455a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "智慧若薰修，　　牽引復生慧，",
        "from": "T17n0725_001:0455a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善惡業果報，　　我說無虛謬。",
        "from": "T17n0725_001:0455a06_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "由善得安樂，　　作惡獲苦惱，",
        "from": "T17n0725_001:0455a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "老病死輪轉，　　果報自如是。",
        "from": "T17n0725_001:0455a08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "審觀此三種，　　勿愛須棄捨，",
        "from": "T17n0725_001:0455a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求福遠離罪，　　了絕於色聲，",
        "from": "T17n0725_001:0455a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "通達真實義，　　必至大解脫。",
        "from": "T17n0725_001:0455a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說六道伽陀經",
        "from": "T17n0725_001:0455a12_100",
        "context_with_next_sentence": false
    }
]