{
    "X63n1250_002:0626a12_0": "禪林備用卷之二",
    "X63n1250_002:0626a14_0": "廬山東林太平興龍禪寺住持比丘　弌咸編辰　坐禪每日粥了。",
    "X63n1250_002:0626a16_1": "堂司行者。",
    "X63n1250_002:0626a16_2": "先覆首座。",
    "X63n1250_002:0626a16_3": "僧堂眾寮前。",
    "X63n1250_002:0626a16_4": "各挂坐禪牌。",
    "X63n1250_002:0626a17_5": "報眾。",
    "X63n1250_002:0626a17_6": "令供頭僧堂內裝香。",
    "X63n1250_002:0626a17_7": "點琉璃。",
    "X63n1250_002:0626a17_8": "堂司覆首座鳴眾寮前板一下。",
    "X63n1250_002:0626a18_9": "大眾即歸被位坐禪。",
    "X63n1250_002:0626a18_10": "堂司見被位有太半人。",
    "X63n1250_002:0626a19_11": "覆眾頭首鳴第二下板。",
    "X63n1250_002:0626a19_12": "少緩。",
    "X63n1250_002:0626a19_13": "鳴第三下板。",
    "X63n1250_002:0626a20_0": "寮元閉眾寮門。",
    "X63n1250_002:0626a20_1": "覆首座坐禪。",
    "X63n1250_002:0626a20_2": "鳴首座寮前板三下。",
    "X63n1250_002:0626a20_3": "初下首座出寮門。",
    "X63n1250_002:0626a21_4": "二下約半途。",
    "X63n1250_002:0626a21_5": "三下將入僧堂門。",
    "X63n1250_002:0626a21_6": "聖僧前。",
    "X63n1250_002:0626a22_7": "燒香一炷。",
    "X63n1250_002:0626a22_8": "自下間至上間。",
    "X63n1250_002:0626a22_9": "巡堂一帀。",
    "X63n1250_002:0626a22_10": "歸被位。",
    "X63n1250_002:0626a22_11": "謂首座曾出世。",
    "X63n1250_002:0626a23_12": "先上間同住持者。",
    "X63n1250_002:0626a23_13": "非法。",
    "X63n1250_002:0626a23_14": "次覆住持坐禪。",
    "X63n1250_002:0626a23_15": "鳴方丈前板三下。",
    "X63n1250_002:0626a24_16": "詳緩與首座同。",
    "X63n1250_002:0626a24_17": "住持入堂。",
    "X63n1250_002:0626a24_18": "燒香一炷。",
    "X63n1250_002:0626b01_0": "巡堂一帀。",
    "X63n1250_002:0626b01_1": "歸位。",
    "X63n1250_002:0626b01_2": "兄弟方許起身抽脫。",
    "X63n1250_002:0626b01_3": "又須看上下肩位。",
    "X63n1250_002:0626b02_4": "或先起者。",
    "X63n1250_002:0626b02_5": "待回方可起身。",
    "X63n1250_002:0626b02_6": "免見單位空踈。",
    "X63n1250_002:0626b02_7": "近日兄弟。",
    "X63n1250_002:0626b03_8": "置袈裟在被上。",
    "X63n1250_002:0626b03_9": "竟去閑處。",
    "X63n1250_002:0626b03_10": "打雜。",
    "X63n1250_002:0626b03_11": "相習成風。",
    "X63n1250_002:0626b03_12": "深為痛借。",
    "X63n1250_002:0626b04_13": "堂中單位空者。",
    "X63n1250_002:0626b04_14": "住持首座須當撿察。",
    "X63n1250_002:0626b04_15": "如眾頭首起位抽解。",
    "X63n1250_002:0626b05_16": "惟前堂首座。",
    "X63n1250_002:0626b05_17": "從住持面前出入。",
    "X63n1250_002:0626b05_18": "其餘皆從出入板出入。",
    "X63n1250_002:0626b06_19": "供頭候可開供時。",
    "X63n1250_002:0626b06_20": "堂司行者覆首座云。",
    "X63n1250_002:0626b06_21": "放禪。",
    "X63n1250_002:0626b07_22": "堂司行者從聖僧龕後。",
    "X63n1250_002:0626b07_23": "右出前門。",
    "X63n1250_002:0626b07_24": "撑起簾。",
    "X63n1250_002:0626b07_25": "下坐禪牌。",
    "X63n1250_002:0626b08_26": "撼聲覺眾。",
    "X63n1250_002:0626b08_27": "堂司右立俟問訊。",
    "X63n1250_002:0626b08_28": "住持。",
    "X63n1250_002:0626b08_29": "首座。",
    "X63n1250_002:0626b08_30": "眾頭首。",
    "X63n1250_002:0626b08_31": "出堂。",
    "X63n1250_002:0626b09_32": "或遇迎送。",
    "X63n1250_002:0626b09_33": "或有普請。",
    "X63n1250_002:0626b09_34": "或送亡。",
    "X63n1250_002:0626b09_35": "或淨髮。",
    "X63n1250_002:0626b09_36": "則皆不坐禪。",
    "X63n1250_002:0626b10_0": "宿　坐參",
    "X63n1250_002:0626b11_0": "至午後。",
    "X63n1250_002:0626b11_1": "堂司行者覆首座坐參。",
    "X63n1250_002:0626b11_2": "僧堂眾寮前。",
    "X63n1250_002:0626b11_3": "各挂坐參牌。",
    "X63n1250_002:0626b12_4": "僧堂內裝香。",
    "X63n1250_002:0626b12_5": "點琉璃。",
    "X63n1250_002:0626b12_6": "打板。",
    "X63n1250_002:0626b12_7": "坐參。",
    "X63n1250_002:0626b12_8": "覆眾頭首覆住持。",
    "X63n1250_002:0626b13_9": "打首座寮方丈板。",
    "X63n1250_002:0626b13_10": "各三下。",
    "X63n1250_002:0626b13_11": "並與坐禪一同。",
    "X63n1250_002:0626b13_12": "但促鳴板耳。",
    "X63n1250_002:0626b14_13": "盖不起抽解故也。",
    "X63n1250_002:0626b14_14": "放參粥熟。",
    "X63n1250_002:0626b14_15": "堂司行者覆首座放參。",
    "X63n1250_002:0626b15_16": "行者轉龕後。",
    "X63n1250_002:0626b15_17": "右出前門。",
    "X63n1250_002:0626b15_18": "鳴僧堂前鍾三下。",
    "X63n1250_002:0626b15_19": "住持出堂。",
    "X63n1250_002:0626b16_20": "次首座眾頭首出堂。",
    "X63n1250_002:0626b16_21": "大眾和南問訊。",
    "X63n1250_002:0626b16_22": "下床。",
    "X63n1250_002:0626b16_23": "各出半單。",
    "X63n1250_002:0626b17_24": "歸眾寮喫粥。",
    "X63n1250_002:0626b17_25": "前輩坐參。",
    "X63n1250_002:0626b17_26": "不待鳴板。",
    "X63n1250_002:0626b17_27": "先歸堂坐。",
    "X63n1250_002:0626b17_28": "集眾坐故。",
    "X63n1250_002:0626b18_29": "方丈不鳴板也。",
    "X63n1250_002:0626b18_30": "放參住持頭首同歸眾寮藥石。",
    "X63n1250_002:0626b19_31": "今也不然。",
    "X63n1250_002:0626b19_32": "甚失古意。",
    "X63n1250_002:0626b20_0": "若晚參。",
    "X63n1250_002:0626b21_0": "堂司行者不覆首座。",
    "X63n1250_002:0626b21_1": "不鳴僧堂前鍾。",
    "X63n1250_002:0626b21_2": "方丈客頭鳴法堂皷。",
    "X63n1250_002:0626b22_3": "住持出堂。",
    "X63n1250_002:0626b22_4": "首座頭首領眾。",
    "X63n1250_002:0626b22_5": "隨至法堂或寢堂。",
    "X63n1250_002:0626b22_6": "隨方毗尼。",
    "X63n1250_002:0626b23_7": "上座坐定。",
    "X63n1250_002:0626b23_8": "侍者出班。",
    "X63n1250_002:0626b23_9": "兩班東西堂。",
    "X63n1250_002:0626b23_10": "各出班問訊。",
    "X63n1250_002:0626b24_11": "晚參畢。",
    "X63n1250_002:0626b24_12": "眾散。",
    "X63n1250_002:0626b24_13": "各歸寮藥石。",
    "X63n1250_002:0626c01_0": "若大放參。",
    "X63n1250_002:0626c02_0": "堂司行者鳴首座寮前板三下。",
    "X63n1250_002:0626c02_1": "大眾轉身面外坐。",
    "X63n1250_002:0626c02_2": "首座離被位。",
    "X63n1250_002:0626c03_3": "下地。",
    "X63n1250_002:0626c03_4": "徑從住持面前。",
    "X63n1250_002:0626c03_5": "出後門。",
    "X63n1250_002:0626c03_6": "復轉從前門入堂。",
    "X63n1250_002:0626c04_7": "聖僧前。",
    "X63n1250_002:0626c04_8": "燒香一炷。",
    "X63n1250_002:0626c04_9": "從下堂至上堂。",
    "X63n1250_002:0626c04_10": "巡堂一帀。",
    "X63n1250_002:0626c04_11": "歸被位坐。",
    "X63n1250_002:0626c05_12": "堂司行者即進首座前問訊云。",
    "X63n1250_002:0626c05_13": "堂頭和尚今晚放參。",
    "X63n1250_002:0626c06_14": "堂司行者復從聖僧厨後。",
    "X63n1250_002:0626c06_15": "轉右。",
    "X63n1250_002:0626c06_16": "出僧堂前。",
    "X63n1250_002:0626c06_17": "令喝食行者。",
    "X63n1250_002:0626c07_18": "進前門限裏。",
    "X63n1250_002:0626c07_19": "中立問訊。",
    "X63n1250_002:0626c07_20": "長聲喝云。",
    "X63n1250_002:0626c07_21": "(放參)鳴堂前鐘三下。",
    "X63n1250_002:0626c08_22": "大眾和南。",
    "X63n1250_002:0626c08_23": "首座曾出世。",
    "X63n1250_002:0626c08_24": "先下地出門。",
    "X63n1250_002:0626c08_25": "次住持出堂。",
    "X63n1250_002:0626c09_26": "頭首出堂。",
    "X63n1250_002:0626c09_27": "眾僧各出全單。",
    "X63n1250_002:0626c09_28": "下地。",
    "X63n1250_002:0626c09_29": "歸寮藥石。",
    "X63n1250_002:0626c09_30": "諸方謂放參不披袈裟。",
    "X63n1250_002:0626c10_31": "轉身方搭衣。",
    "X63n1250_002:0626c10_32": "非法也。",
    "X63n1250_002:0626c10_33": "唯徑山寺。",
    "X63n1250_002:0626c11_0": "古規不墜。",
    "X63n1250_002:0626c11_1": "披衣坐參。",
    "X63n1250_002:0626c11_2": "當力行之。",
    "X63n1250_002:0626c11_3": "或不坐參。",
    "X63n1250_002:0626c11_4": "供頭出首座單。",
    "X63n1250_002:0626c12_5": "每日首座下地。",
    "X63n1250_002:0626c12_6": "後堂首座與次頭首伴。",
    "X63n1250_002:0626c12_7": "眾摺被。",
    "X63n1250_002:0626c13_0": "前堂被。",
    "X63n1250_002:0626c13_1": "係供頭摺蓋。",
    "X63n1250_002:0626c13_2": "參罷。",
    "X63n1250_002:0626c13_3": "眾寮前鳴板三下。",
    "X63n1250_002:0626c13_4": "出寮歸堂。",
    "X63n1250_002:0626c14_5": "昏鐘鳴。",
    "X63n1250_002:0626c14_6": "次頭首先入堂。",
    "X63n1250_002:0626c14_7": "首座待鐘轉二通入堂。",
    "X63n1250_002:0626c14_8": "燒香巡堂。",
    "X63n1250_002:0626c15_9": "歸位。",
    "X63n1250_002:0626c15_10": "次住持入堂。",
    "X63n1250_002:0626c15_11": "定鐘鳴。",
    "X63n1250_002:0626c15_12": "住持出堂。",
    "X63n1250_002:0626c15_13": "次頭首出堂。",
    "X63n1250_002:0626c16_14": "如坐再請禪。",
    "X63n1250_002:0626c16_15": "住持後門入。",
    "X63n1250_002:0626c16_16": "歸位。",
    "X63n1250_002:0626c16_17": "不巡堂。",
    "X63n1250_002:0626c16_18": "頭首隨眾。",
    "X63n1250_002:0626c17_19": "或抽解者。",
    "X63n1250_002:0626c17_20": "即歸被位。",
    "X63n1250_002:0626c17_21": "更深。",
    "X63n1250_002:0626c17_22": "住持從後門出。",
    "X63n1250_002:0626c17_23": "次第頭首下堂。",
    "X63n1250_002:0626c18_24": "開枕。",
    "X63n1250_002:0626c18_25": "睡重者。",
    "X63n1250_002:0626c18_26": "就睡。",
    "X63n1250_002:0626c18_27": "道念兄弟。",
    "X63n1250_002:0626c18_28": "不以此拘。",
    "X63n1250_002:0626c18_29": "三板鳴。",
    "X63n1250_002:0626c19_30": "眾起。",
    "X63n1250_002:0626c19_31": "聖僧侍者堂內牽手巾。",
    "X63n1250_002:0626c19_32": "驚酣眠者。",
    "X63n1250_002:0626c19_33": "洗面。",
    "X63n1250_002:0626c19_34": "眾歸堂已。",
    "X63n1250_002:0626c20_35": "先首座次住持。",
    "X63n1250_002:0626c20_36": "入堂。",
    "X63n1250_002:0626c20_37": "燒香。",
    "X63n1250_002:0626c20_38": "巡堂。",
    "X63n1250_002:0626c20_39": "歸位。",
    "X63n1250_002:0626c20_40": "四鼓。",
    "X63n1250_002:0626c20_41": "住持出堂。",
    "X63n1250_002:0626c21_42": "行香。",
    "X63n1250_002:0626c21_43": "鐘鳴首座下地。",
    "X63n1250_002:0626c21_44": "僧眾換衣。",
    "X63n1250_002:0626c21_45": "換頭袖。",
    "X63n1250_002:0626c21_46": "抽解。",
    "X63n1250_002:0626c21_47": "即歸守被位。",
    "X63n1250_002:0626c22_48": "鐘絕開小靜。",
    "X63n1250_002:0626c22_49": "方可摺被。",
    "X63n1250_002:0626c22_50": "為生死事大。",
    "X63n1250_002:0626c22_51": "禮拜燒香。",
    "X63n1250_002:0626c23_52": "亦雜用心也。",
    "X63n1250_002:0626c24_0": "列　五日上堂",
    "X63n1250_002:0627a01_0": "若尊宿相訪。",
    "X63n1250_002:0627a01_1": "不拘時。",
    "X63n1250_002:0627a01_2": "五參上堂。",
    "X63n1250_002:0627a01_3": "座不敷設。",
    "X63n1250_002:0627a01_4": "兩序徑歸班立。",
    "X63n1250_002:0627a02_5": "小參禮同。",
    "X63n1250_002:0627a02_6": "開發學者。",
    "X63n1250_002:0627a02_7": "致謝道舊。",
    "X63n1250_002:0627a02_8": "古宿朝夕激揚此道。",
    "X63n1250_002:0627a03_9": "晚參曾不越宿。",
    "X63n1250_002:0627a03_10": "今時遇五上堂。",
    "X63n1250_002:0627a03_11": "單提正令。",
    "X63n1250_002:0627a03_12": "亦不易得也。",
    "X63n1250_002:0627a04_13": "眾僧凡遇升堂。",
    "X63n1250_002:0627a04_14": "各賷坐具。",
    "X63n1250_002:0627a04_15": "禮不可廢。",
    "X63n1250_002:0627a04_16": "侍者隔宿。",
    "X63n1250_002:0627a05_17": "通覆。",
    "X63n1250_002:0627a05_18": "致謝來客。",
    "X63n1250_002:0627a05_19": "多則具目子。",
    "X63n1250_002:0627a05_20": "失記名者。",
    "X63n1250_002:0627a05_21": "須用提起。",
    "X63n1250_002:0627a06_0": "早晨侍者。",
    "X63n1250_002:0627a06_1": "令客頭挂牌。",
    "X63n1250_002:0627a06_2": "報諸寮。",
    "X63n1250_002:0627a06_3": "尊宿。",
    "X63n1250_002:0627a06_4": "若致謝官員。",
    "X63n1250_002:0627a06_5": "當對座設位。",
    "X63n1250_002:0627a07_6": "住持趺坐了。",
    "X63n1250_002:0627a07_7": "令請客侍者揖引入位。",
    "X63n1250_002:0627a07_8": "官客受禮而已。",
    "X63n1250_002:0627a08_9": "坐則妨眾也。",
    "X63n1250_002:0627a09_0": "張　小參",
    "X63n1250_002:0627a10_0": "百丈謂之家訓。",
    "X63n1250_002:0627a10_1": "古法只就寢堂箴誨。",
    "X63n1250_002:0627a10_2": "垂示。",
    "X63n1250_002:0627a10_3": "委曲提撕。",
    "X63n1250_002:0627a11_0": "若其緘口亡言。",
    "X63n1250_002:0627a11_1": "倚目玄綱墜地。",
    "X63n1250_002:0627a11_2": "前輩時時激揚宗旨。",
    "X63n1250_002:0627a12_0": "開發後昆。",
    "X63n1250_002:0627a12_1": "楊岐逼慈明晚參。",
    "X63n1250_002:0627a12_2": "豈為他哉。",
    "X63n1250_002:0627a12_3": "汾陽以夜寒罷參。",
    "X63n1250_002:0627a13_4": "胡僧至而請之。",
    "X63n1250_002:0627a13_5": "頌云。",
    "X63n1250_002:0627a13_6": "(胡僧金錫光。",
    "X63n1250_002:0627a13_7": "為法到汾陽。",
    "X63n1250_002:0627a13_8": "六人成大器。",
    "X63n1250_002:0627a13_9": "勸請為敷揚)今之四節臘。",
    "X63n1250_002:0627a14_10": "敘謝兩班執事。",
    "X63n1250_002:0627a14_11": "非古法也。",
    "X63n1250_002:0627a14_12": "凡遇小參。",
    "X63n1250_002:0627a14_13": "放參不鳴僧堂前鍾。",
    "X63n1250_002:0627a15_14": "午後。",
    "X63n1250_002:0627a15_15": "侍者令客頭報寮挂牌。",
    "X63n1250_002:0627a15_16": "昏黃行者覆侍者。",
    "X63n1250_002:0627a16_17": "次覆住持鳴鼓。",
    "X63n1250_002:0627a16_18": "茶頭秉燭裝香。",
    "X63n1250_002:0627a16_19": "侍者離班。",
    "X63n1250_002:0627a17_20": "出法堂。",
    "X63n1250_002:0627a17_21": "候眾集。",
    "X63n1250_002:0627a17_22": "兩班徑歸位。",
    "X63n1250_002:0627a17_23": "立定。",
    "X63n1250_002:0627a17_24": "無對座問訊。",
    "X63n1250_002:0627a17_25": "侍者入請。",
    "X63n1250_002:0627a18_26": "住持出據位。",
    "X63n1250_002:0627a18_27": "小參皷鳴一通。",
    "X63n1250_002:0627a18_28": "皷鳴眾即集法堂。",
    "X63n1250_002:0627a19_29": "出班。",
    "X63n1250_002:0627a19_30": "並五日升堂禮同。",
    "X63n1250_002:0627a19_31": "結座。",
    "X63n1250_002:0627a19_32": "住持記請頭首秉拂。",
    "X63n1250_002:0627a20_0": "單寮四寮。",
    "X63n1250_002:0627a20_1": "并雜職。",
    "X63n1250_002:0627a20_2": "一一敘陳。",
    "X63n1250_002:0627a20_3": "委曲詳盡。",
    "X63n1250_002:0627a20_4": "失記處。",
    "X63n1250_002:0627a20_5": "侍者提起。",
    "X63n1250_002:0627a21_6": "庫司預備湯果。",
    "X63n1250_002:0627a21_7": "送上方丈。",
    "X63n1250_002:0627a21_8": "下座。",
    "X63n1250_002:0627a21_9": "客頭行者喝請云。",
    "X63n1250_002:0627a22_10": "(方丈請。",
    "X63n1250_002:0627a22_11": "兩班。",
    "X63n1250_002:0627a22_12": "西堂。",
    "X63n1250_002:0627a22_13": "單寮。",
    "X63n1250_002:0627a22_14": "大耆舊。",
    "X63n1250_002:0627a22_15": "蒙堂。",
    "X63n1250_002:0627a22_16": "侍者。",
    "X63n1250_002:0627a22_17": "禪客。",
    "X63n1250_002:0627a22_18": "即今就寢堂獻湯云)參前出免人事榜。",
    "X63n1250_002:0627a23_19": "客頭貼僧堂前上間。",
    "X63n1250_002:0627a24_0": "榜式(來日結制解冬年。",
    "X63n1250_002:0627a24_1": "升堂罷普觸禮三拜。",
    "X63n1250_002:0627a24_2": "人事並免。",
    "X63n1250_002:0627a24_3": "到方丈。",
    "X63n1250_002:0627a24_4": "伏希　眾悉。",
    "X63n1250_002:0627a24_5": "　住山　某咨稟)。",
    "X63n1250_002:0627b01_0": "寒　入室",
    "X63n1250_002:0627b02_0": "開大爐鞴。",
    "X63n1250_002:0627b02_1": "煅煉方來。",
    "X63n1250_002:0627b02_2": "真正舉揚。",
    "X63n1250_002:0627b02_3": "克盡厥責。",
    "X63n1250_002:0627b02_4": "曉昏不拘時也。",
    "X63n1250_002:0627b03_5": "近代三八。",
    "X63n1250_002:0627b03_6": "聊應故事。",
    "X63n1250_002:0627b03_7": "漸寂無聞。",
    "X63n1250_002:0627b03_8": "可不痛心耶。",
    "X63n1250_002:0627b03_9": "凡開室之時。",
    "X63n1250_002:0627b04_10": "粥前。",
    "X63n1250_002:0627b04_11": "侍者令客頭行者。",
    "X63n1250_002:0627b04_12": "眾寮僧堂前挂入室牌。",
    "X63n1250_002:0627b05_13": "寢堂設達磨像。",
    "X63n1250_002:0627b05_14": "前列香燭。",
    "X63n1250_002:0627b05_15": "拜蓆。",
    "X63n1250_002:0627b05_16": "客頭敷設室內。",
    "X63n1250_002:0627b06_0": "茶頭秉燭裝香。",
    "X63n1250_002:0627b06_1": "拜蓆設左側。",
    "X63n1250_002:0627b06_2": "喫粥。",
    "X63n1250_002:0627b06_3": "下堂。",
    "X63n1250_002:0627b06_4": "不諷經。",
    "X63n1250_002:0627b06_5": "客頭即緩擊皷三下。",
    "X63n1250_002:0627b07_6": "住持達磨前炷香三拜。",
    "X63n1250_002:0627b07_7": "侍者隨後拜。",
    "X63n1250_002:0627b08_0": "據室。",
    "X63n1250_002:0627b08_1": "侍者當面問訊。",
    "X63n1250_002:0627b08_2": "班左立。",
    "X63n1250_002:0627b08_3": "行者問訊。",
    "X63n1250_002:0627b08_4": "班右立。",
    "X63n1250_002:0627b08_5": "頭首領眾。",
    "X63n1250_002:0627b09_6": "達磨前。",
    "X63n1250_002:0627b09_7": "各炷香三拜。",
    "X63n1250_002:0627b09_8": "如班聯接首座後。",
    "X63n1250_002:0627b09_9": "後至者。",
    "X63n1250_002:0627b10_0": "須待次炷香展拜。",
    "X63n1250_002:0627b10_1": "接排而立。",
    "X63n1250_002:0627b10_2": "自右趲。",
    "X63n1250_002:0627b10_3": "至室前。",
    "X63n1250_002:0627b10_4": "不許攙先。",
    "X63n1250_002:0627b11_5": "亂眾倫序。",
    "X63n1250_002:0627b11_6": "侍者燒香一炷。",
    "X63n1250_002:0627b11_7": "問訊。",
    "X63n1250_002:0627b11_8": "出外揖。",
    "X63n1250_002:0627b11_9": "首座舉左足入。",
    "X63n1250_002:0627b12_10": "左手上香一炷。",
    "X63n1250_002:0627b12_11": "進步。",
    "X63n1250_002:0627b12_12": "當前問訊。",
    "X63n1250_002:0627b12_13": "至禪椅右側。",
    "X63n1250_002:0627b12_14": "立聽舉話。",
    "X63n1250_002:0627b13_15": "侍者再揖次人入。",
    "X63n1250_002:0627b13_16": "歸班立。",
    "X63n1250_002:0627b13_17": "首座下語。",
    "X63n1250_002:0627b13_18": "或不下語。",
    "X63n1250_002:0627b14_19": "過禪椅右。",
    "X63n1250_002:0627b14_20": "問訊退步。",
    "X63n1250_002:0627b14_21": "觸禮一拜。",
    "X63n1250_002:0627b14_22": "舉左足出。",
    "X63n1250_002:0627b14_23": "揖次人入。",
    "X63n1250_002:0627b15_24": "次第進退。",
    "X63n1250_002:0627b15_25": "如品字勢。",
    "X63n1250_002:0627b15_26": "若首座是大方西堂。",
    "X63n1250_002:0627b15_27": "或宿德。",
    "X63n1250_002:0627b16_0": "入燒香次。",
    "X63n1250_002:0627b16_1": "住持當引揖送出。",
    "X63n1250_002:0627b16_2": "升堂說過後次免之。",
    "X63n1250_002:0627b16_3": "後堂領眾。",
    "X63n1250_002:0627b17_4": "暫到皆當入室。",
    "X63n1250_002:0627b17_5": "若大方西堂。",
    "X63n1250_002:0627b17_6": "名德首座。",
    "X63n1250_002:0627b17_7": "同參。",
    "X63n1250_002:0627b18_0": "老成來預入室。",
    "X63n1250_002:0627b18_1": "當下座辭免。",
    "X63n1250_002:0627b18_2": "令侍者送出。",
    "X63n1250_002:0627b18_3": "侍者最後入室已。",
    "X63n1250_002:0627b19_4": "炷香列住持前。",
    "X63n1250_002:0627b19_5": "大展三拜。",
    "X63n1250_002:0627b19_6": "行者插香三拜。",
    "X63n1250_002:0627b19_7": "按大慧竹庵雲門議集。",
    "X63n1250_002:0627b20_8": "入室罷。",
    "X63n1250_002:0627b20_9": "住持復出達磨前炷香。",
    "X63n1250_002:0627b21_0": "大展九拜。",
    "X63n1250_002:0627b21_1": "仰遵遺教。",
    "X63n1250_002:0627b21_2": "頫謝證明。",
    "X63n1250_002:0627b21_3": "令法久住。",
    "X63n1250_002:0627b22_0": "來　告香",
    "X63n1250_002:0627b23_0": "四月五日。",
    "X63n1250_002:0627b23_1": "告香。",
    "X63n1250_002:0627b23_2": "開示方來。",
    "X63n1250_002:0627b23_3": "眾推參頭一人。",
    "X63n1250_002:0627b23_4": "維那和會定。",
    "X63n1250_002:0627b24_5": "同眾詣侍司稟云。",
    "X63n1250_002:0627b24_6": "新挂搭兄弟。",
    "X63n1250_002:0627b24_7": "欲求和尚告香普說。",
    "X63n1250_002:0627c01_8": "敢煩侍者咨稟。",
    "X63n1250_002:0627c01_9": "者云。",
    "X63n1250_002:0627c01_10": "(容某候覆。",
    "X63n1250_002:0627c01_11": "却當相報)方丈允已。",
    "X63n1250_002:0627c01_12": "堂司預出告香圖。",
    "X63n1250_002:0627c02_13": "依戒排寫。",
    "X63n1250_002:0627c02_14": "式具後。",
    "X63n1250_002:0627c02_15": "預集眾習儀。",
    "X63n1250_002:0627c02_16": "堂司行者率大眾錢。",
    "X63n1250_002:0627c03_17": "買香大小三片。",
    "X63n1250_002:0627c03_18": "付參頭收。",
    "X63n1250_002:0627c03_19": "至日侍者令客頭。",
    "X63n1250_002:0627c04_20": "於寢堂或法堂。",
    "X63n1250_002:0627c04_21": "鋪設罣罳椅子。",
    "X63n1250_002:0627c04_22": "香几三隻。",
    "X63n1250_002:0627c04_23": "燭臺三對。",
    "X63n1250_002:0627c05_24": "當椅前。",
    "X63n1250_002:0627c05_25": "一字間列。",
    "X63n1250_002:0627c05_26": "外設小拜蓆。",
    "X63n1250_002:0627c05_27": "堂司預晚挂告香牌。",
    "X63n1250_002:0627c06_28": "牌左云。",
    "X63n1250_002:0627c06_29": "(告香罷普說)逐一報寮。",
    "X63n1250_002:0627c06_30": "至時諸寮鳴板三下。",
    "X63n1250_002:0627c06_31": "眾集。",
    "X63n1250_002:0627c07_32": "依圖位立。",
    "X63n1250_002:0627c07_33": "侍者白云。",
    "X63n1250_002:0627c07_34": "(奉堂頭和尚慈旨。",
    "X63n1250_002:0627c07_35": "出世西堂。",
    "X63n1250_002:0627c07_36": "名德首座。",
    "X63n1250_002:0627c07_37": "並免告香)各備小香合。",
    "X63n1250_002:0627c08_38": "坐具。",
    "X63n1250_002:0627c08_39": "參頭同維那侍者。",
    "X63n1250_002:0627c08_40": "入請住持出。",
    "X63n1250_002:0627c08_41": "參頭歸位。",
    "X63n1250_002:0627c09_42": "同眾問訊。",
    "X63n1250_002:0627c09_43": "進前云。",
    "X63n1250_002:0627c09_44": "(請和尚趺坐)參頭復位。",
    "X63n1250_002:0627c09_45": "同眾問訊。",
    "X63n1250_002:0627c10_0": "插大香一片。",
    "X63n1250_002:0627c10_1": "復同眾問訊。",
    "X63n1250_002:0627c10_2": "各大展三拜。",
    "X63n1250_002:0627c10_3": "收具。",
    "X63n1250_002:0627c10_4": "復問訊。",
    "X63n1250_002:0627c11_0": "參頭徑右入椅側。",
    "X63n1250_002:0627c11_1": "問訊。",
    "X63n1250_002:0627c11_2": "稟云。",
    "X63n1250_002:0627c11_3": "(某等。",
    "X63n1250_002:0627c11_4": "為生死事大。",
    "X63n1250_002:0627c11_5": "無常迅速。",
    "X63n1250_002:0627c11_6": "伏望。",
    "X63n1250_002:0627c11_7": "和尚慈悲。",
    "X63n1250_002:0627c11_8": "開示因緣)住持舉話三則。",
    "X63n1250_002:0627c12_9": "隨轉語了。",
    "X63n1250_002:0627c12_10": "歸位問訊。",
    "X63n1250_002:0627c12_11": "插香一片。",
    "X63n1250_002:0627c13_0": "復同眾問訊。",
    "X63n1250_002:0627c13_1": "就位。",
    "X63n1250_002:0627c13_2": "叉手而立。",
    "X63n1250_002:0627c13_3": "東西各三人出班。",
    "X63n1250_002:0627c13_4": "東第一第二。",
    "X63n1250_002:0627c14_5": "過東爐前。",
    "X63n1250_002:0627c14_6": "第三人中爐前立。",
    "X63n1250_002:0627c14_7": "西邊第一第二。",
    "X63n1250_002:0627c15_0": "過西爐前。",
    "X63n1250_002:0627c15_1": "第三人中爐前立。",
    "X63n1250_002:0627c15_2": "兩兩炷香。",
    "X63n1250_002:0627c15_3": "問訊。",
    "X63n1250_002:0627c15_4": "東邊三人。",
    "X63n1250_002:0627c16_5": "西邊三人。",
    "X63n1250_002:0627c16_6": "徐行各巡接班尾。",
    "X63n1250_002:0627c16_7": "三三出班。",
    "X63n1250_002:0627c16_8": "(叉手出班。",
    "X63n1250_002:0627c16_9": "合掌歸位)次第趲至元位。",
    "X63n1250_002:0627c17_10": "各大展三拜。",
    "X63n1250_002:0627c17_11": "不收具。",
    "X63n1250_002:0627c17_12": "參頭進前云。",
    "X63n1250_002:0627c17_13": "(某等伏蒙和尚慈悲開示。",
    "X63n1250_002:0627c18_14": "下情不勝感激之至)復位三拜。",
    "X63n1250_002:0627c18_15": "進前云。",
    "X63n1250_002:0627c18_16": "(即日孟夏。",
    "X63n1250_002:0627c18_17": "謹時。",
    "X63n1250_002:0627c18_18": "恭惟。",
    "X63n1250_002:0627c18_19": "堂頭和尚。",
    "X63n1250_002:0627c19_20": "尊候起居萬福)復位三拜。",
    "X63n1250_002:0627c19_21": "各收具。",
    "X63n1250_002:0627c19_22": "客頭鳴皷五下。",
    "X63n1250_002:0627c19_23": "兩班轉身立班。",
    "X63n1250_002:0627c20_24": "參頭立西班下手。",
    "X63n1250_002:0627c20_25": "東西轉身。",
    "X63n1250_002:0627c20_26": "隨班對立。",
    "X63n1250_002:0627c20_27": "聽普說竟。",
    "X63n1250_002:0627c21_28": "仍各面裏立。",
    "X63n1250_002:0627c21_29": "參頭插香。",
    "X63n1250_002:0627c21_30": "同眾大展三拜。",
    "X63n1250_002:0627c21_31": "免則觸禮三拜。",
    "X63n1250_002:0627c22_32": "進云。",
    "X63n1250_002:0627c22_33": "(某等夙生慶幸。",
    "X63n1250_002:0627c22_34": "獲蒙和尚慈悲開示。",
    "X63n1250_002:0627c22_35": "下情不勝感激之至)普同問訊而退。",
    "X63n1250_002:0627c23_36": "參頭領眾。",
    "X63n1250_002:0627c23_37": "法堂下間。",
    "X63n1250_002:0627c23_38": "謝維那侍者。",
    "X63n1250_002:0627c23_39": "觸禮一拜。",
    "X63n1250_002:0627c23_40": "次眾人謝參頭。",
    "X63n1250_002:0627c24_41": "觸禮一拜。",
    "X63n1250_002:0627c24_42": "請客侍者預日令客頭至。",
    "X63n1250_002:0627c24_43": "堂司。",
    "X63n1250_002:0628a01_44": "具新到戒次。",
    "X63n1250_002:0628a01_45": "寫茶狀。",
    "X63n1250_002:0628a01_46": "客頭俻卓袱。",
    "X63n1250_002:0628a01_47": "告香罷。",
    "X63n1250_002:0628a01_48": "列法堂下間。",
    "X63n1250_002:0628a02_49": "請茶。",
    "X63n1250_002:0628a02_50": "備筆硯。",
    "X63n1250_002:0628a02_51": "僉名。",
    "X63n1250_002:0628a02_52": "請首座光伴。",
    "X63n1250_002:0628a02_53": "齋退鳴鼓。",
    "X63n1250_002:0628a02_54": "住持接眾人歸位。",
    "X63n1250_002:0628a03_55": "立定。",
    "X63n1250_002:0628a03_56": "兩侍者行禮。",
    "X63n1250_002:0628a03_57": "與特為茶禮同。",
    "X63n1250_002:0628a03_58": "當晚方丈請參頭維那侍者藥石。",
    "X63n1250_002:0628a04_59": "首座光伴。",
    "X63n1250_002:0628a04_60": "次早請參頭茶。",
    "X63n1250_002:0628a05_61": "及請點心。",
    "X63n1250_002:0628a05_62": "維那侍者同。",
    "X63n1250_002:0628a05_63": "若大眾均預告香。",
    "X63n1250_002:0628a05_64": "首座為參頭。",
    "X63n1250_002:0628a06_65": "特為茶。",
    "X63n1250_002:0628a06_66": "止請參頭兩班光伴。",
    "X63n1250_002:0628a06_67": "住持入院後。",
    "X63n1250_002:0628a06_68": "人事定。",
    "X63n1250_002:0628b01_69": "庫司備香。",
    "X63n1250_002:0628b01_70": "首座領眾。",
    "X63n1250_002:0628b01_71": "詣方丈懇請。",
    "X63n1250_002:0628b01_72": "為眾告香。",
    "X63n1250_002:0628b01_73": "然後開室。",
    "X63n1250_002:0628b02_74": "古法未預告香。",
    "X63n1250_002:0628b02_75": "不許入室。",
    "X63n1250_002:0628b03_0": "狀式　(某甲上座。",
    "X63n1250_002:0628b03_1": "　某甲上座。",
    "X63n1250_002:0628b03_2": "依戒書名訖。",
    "X63n1250_002:0628b03_3": "　方丈和尚。",
    "X63n1250_002:0628b03_4": "齋退。",
    "X63n1250_002:0628b03_5": "就法堂。",
    "X63n1250_002:0628b03_6": "特為點茶。",
    "X63n1250_002:0628b03_7": "伏希　雲集)(今　月　日。",
    "X63n1250_002:0628b04_8": "侍司　某甲。",
    "X63n1250_002:0628b04_9": "請客侍者名。",
    "X63n1250_002:0628b04_10": "拜請)。",
    "X63n1250_002:0628d01_0": "暑　普說",
    "X63n1250_002:0628d02_0": "凡普說時。",
    "X63n1250_002:0628d02_1": "侍者令方丈客頭。",
    "X63n1250_002:0628d02_2": "挂普說牌。",
    "X63n1250_002:0628d02_3": "於僧堂眾寮前。",
    "X63n1250_002:0628d03_4": "并諸寮鋪設。",
    "X63n1250_002:0628d03_5": "寢堂或法堂。",
    "X63n1250_002:0628d03_6": "粥罷。",
    "X63n1250_002:0628d03_7": "堂司行者覆侍者。",
    "X63n1250_002:0628d04_0": "次覆方丈。",
    "X63n1250_002:0628d04_1": "鳴皷五下。",
    "X63n1250_002:0628d04_2": "緩擊。",
    "X63n1250_002:0628d04_3": "侍者出寢堂候眾集。",
    "X63n1250_002:0628d04_4": "入請住持。",
    "X63n1250_002:0628d05_5": "出據坐。",
    "X63n1250_002:0628d05_6": "普說與小參禮同。",
    "X63n1250_002:0628d05_7": "洞下尊宿。",
    "X63n1250_002:0628d05_8": "每遇朔望。",
    "X63n1250_002:0628d06_0": "眾寮設位。",
    "X63n1250_002:0628d06_1": "為眾普說。",
    "X63n1250_002:0628d06_2": "惟大慧和尚。",
    "X63n1250_002:0628d06_3": "宗通說通。",
    "X63n1250_002:0628d06_4": "不拘時節。",
    "X63n1250_002:0628e01_5": "不擇方所也。",
    "X63n1250_002:0628e02_0": "往　念誦(三八)",
    "X63n1250_002:0628e03_0": "結夏依戒次寫圖。",
    "X63n1250_002:0628e03_1": "至日僧堂前掃洒。",
    "X63n1250_002:0628e03_2": "午後。",
    "X63n1250_002:0628e03_3": "堂司行者覆方丈諸寮。",
    "X63n1250_002:0628e04_4": "挂念誦牌。",
    "X63n1250_002:0628e04_5": "分付鐘頭。",
    "X63n1250_002:0628e04_6": "至參前撿點聖僧前。",
    "X63n1250_002:0628e05_7": "及諸殿堂。",
    "X63n1250_002:0628e05_8": "香燭完備。",
    "X63n1250_002:0628e05_9": "先覆維那侍者方丈庫司首座頭首單寮。",
    "X63n1250_002:0628e06_10": "鳴照堂板三下。",
    "X63n1250_002:0628e06_11": "次巡廊鳴板。",
    "X63n1250_002:0628e06_12": "再上覆方丈打板。",
    "X63n1250_002:0628f01_13": "眾集。",
    "X63n1250_002:0628f01_14": "依圖立定。",
    "X63n1250_002:0628f01_15": "暫到侍者下肩立。",
    "X63n1250_002:0628f01_16": "住持到大殿燒香。",
    "X63n1250_002:0628f02_17": "鳴大板三下。",
    "X63n1250_002:0628f02_18": "次鳴大鐘。",
    "X63n1250_002:0628f02_19": "兩班預集僧堂外。",
    "X63n1250_002:0628f02_20": "大板鳴。",
    "X63n1250_002:0628f03_21": "方歸圖位。",
    "X63n1250_002:0628f03_22": "次住持入堂。",
    "X63n1250_002:0628f03_23": "供頭鳴堂前鐘七下。",
    "X63n1250_002:0628f03_24": "住持聖僧前燒香。",
    "X63n1250_002:0628f04_25": "侍者捧合。",
    "X63n1250_002:0628f04_26": "請客侍者即往西班人前。",
    "X63n1250_002:0628f05_0": "巡問訊。",
    "X63n1250_002:0628f05_1": "請云。",
    "X63n1250_002:0628f05_2": "(方丈和尚請。",
    "X63n1250_002:0628f05_3": "念誦罷。",
    "X63n1250_002:0628f05_4": "寢堂。",
    "X63n1250_002:0628f05_5": "献湯)請東班。",
    "X63n1250_002:0628f05_6": "同就歸圖位立。",
    "X63n1250_002:0628f06_0": "住持出堂前。",
    "X63n1250_002:0628f06_1": "面外立。",
    "X63n1250_002:0628f06_2": "燒香侍者隨出歸位。",
    "X63n1250_002:0628f06_3": "維那先離位。",
    "X63n1250_002:0628f07_4": "至門首。",
    "X63n1250_002:0628f07_5": "面住持立。",
    "X63n1250_002:0628f07_6": "合掌念誦畢。",
    "X63n1250_002:0628f07_7": "歸班位。",
    "X63n1250_002:0628f07_8": "住持入堂。",
    "X63n1250_002:0628f08_0": "次首座入。",
    "X63n1250_002:0628f08_1": "西堂隨首座後入。",
    "X63n1250_002:0628f08_2": "在聖僧板頭立。",
    "X63n1250_002:0628f08_3": "次頭首接後。",
    "X63n1250_002:0628f09_4": "次第三三。",
    "X63n1250_002:0628f09_5": "聖僧前。",
    "X63n1250_002:0628f09_6": "問訊。",
    "X63n1250_002:0628f09_7": "轉身。",
    "X63n1250_002:0628f09_8": "問訊住持。",
    "X63n1250_002:0628f09_9": "面北巡堂問訊。",
    "X63n1250_002:0628f10_10": "依圖位。",
    "X63n1250_002:0628f10_11": "合掌立。",
    "X63n1250_002:0628f10_12": "暫到眾人。",
    "X63n1250_002:0628f10_13": "末侍者。",
    "X63n1250_002:0628f10_14": "隨後入。",
    "X63n1250_002:0628f10_15": "至聖僧龕後。",
    "X63n1250_002:0628f11_16": "面門立。",
    "X63n1250_002:0628f11_17": "暫到面龕立。",
    "X63n1250_002:0628f11_18": "次知事入堂。",
    "X63n1250_002:0628f11_19": "巡問訊出堂。",
    "X63n1250_002:0628f12_20": "暫到侍者隨出。",
    "X63n1250_002:0628f12_21": "堂司行者。",
    "X63n1250_002:0628f12_22": "往首座前。",
    "X63n1250_002:0628f12_23": "覆放參。",
    "X63n1250_002:0628f12_24": "從龕後轉。",
    "X63n1250_002:0628f13_25": "出前門。",
    "X63n1250_002:0628f13_26": "供頭鳴鐘三下。",
    "X63n1250_002:0628f13_27": "住持出。",
    "X63n1250_002:0628f13_28": "兩班隨出。",
    "X63n1250_002:0628f13_29": "堂前謝湯。",
    "X63n1250_002:0628f14_30": "下八赴湯。",
    "X63n1250_002:0628f14_31": "寢堂鳴板。",
    "X63n1250_002:0628f14_32": "侍者燒香行禮如常式。",
    "X63n1250_002:0628f15_0": "湯罷。",
    "X63n1250_002:0628f15_1": "藥石。",
    "X63n1250_002:0628f15_2": "古法。",
    "X63n1250_002:0628f15_3": "三八皆有湯。",
    "X63n1250_002:0628f15_4": "上八中八則免藥石(不坐參。",
    "X63n1250_002:0628f16_5": "至晚坐堂則如常)。",
    "X63n1250_002:0628f17_0": "念誦式。",
    "X63n1250_002:0628f17_1": "(上八中八)皇風永扇。",
    "X63n1250_002:0628f17_2": "帝道遐昌。",
    "X63n1250_002:0628f17_3": "佛日增輝。",
    "X63n1250_002:0628f17_4": "法輪常轉。",
    "X63n1250_002:0628f18_5": "伽藍土地。",
    "X63n1250_002:0628f18_6": "護法護人。",
    "X63n1250_002:0628f18_7": "十方檀那。",
    "X63n1250_002:0628f18_8": "增福增慧。",
    "X63n1250_002:0628f18_9": "為如上緣念。",
    "X63n1250_002:0628f19_10": "清淨法身毗盧遮那佛(十聲。",
    "X63n1250_002:0628f19_11": "聖號了。",
    "X63n1250_002:0628f19_12": "回向)。",
    "X63n1250_002:0628f20_0": "(下八)白大眾。",
    "X63n1250_002:0628f20_1": "如來大師。",
    "X63n1250_002:0628f20_2": "入般涅槃。",
    "X63n1250_002:0628f20_3": "至今至治元年。",
    "X63n1250_002:0628f21_0": "已得二千二百七十載。",
    "X63n1250_002:0628f21_1": "是日已過。",
    "X63n1250_002:0628f21_2": "命亦隨減。",
    "X63n1250_002:0628f21_3": "如少水魚。",
    "X63n1250_002:0628f22_4": "斯有何樂。",
    "X63n1250_002:0628f22_5": "眾等當懃精進。",
    "X63n1250_002:0628f22_6": "如救頭然。",
    "X63n1250_002:0628f22_7": "但念無常。",
    "X63n1250_002:0628f23_8": "慎勿放逸。",
    "X63n1250_002:0628f23_9": "伽藍土地護法護人。",
    "X63n1250_002:0628f23_10": "十方檀那。",
    "X63n1250_002:0628f23_11": "增福增慧。",
    "X63n1250_002:0628f24_12": "為如上緣念。",
    "X63n1250_002:0628f24_13": "清淨十號。",
    "X63n1250_002:0629b01_0": "秋　四節念誦",
    "X63n1250_002:0629b02_0": "結制。",
    "X63n1250_002:0629b02_1": "解制。",
    "X63n1250_002:0629b02_2": "冬節。",
    "X63n1250_002:0629b02_3": "歲除。",
    "X63n1250_002:0629b02_4": "土地堂嚴設供養。",
    "X63n1250_002:0629b02_5": "庫司客頭覆維那。",
    "X63n1250_002:0629b03_6": "堂司行者覆方丈。",
    "X63n1250_002:0629b03_7": "兩班諸寮。",
    "X63n1250_002:0629b03_8": "挂念誦牌。",
    "X63n1250_002:0629b03_9": "報眾。",
    "X63n1250_002:0629b03_10": "禮與三八同。",
    "X63n1250_002:0629b04_11": "眾集。",
    "X63n1250_002:0629b04_12": "相對鴈立。",
    "X63n1250_002:0629b04_13": "住持大殿炷香三拜。",
    "X63n1250_002:0629b04_14": "鳴大板三下。",
    "X63n1250_002:0629b05_15": "鳴大鐘。",
    "X63n1250_002:0629b05_16": "住持至。",
    "X63n1250_002:0629b05_17": "大眾合掌。",
    "X63n1250_002:0629b05_18": "俛首迎之。",
    "X63n1250_002:0629b05_19": "侍者當叉手。",
    "X63n1250_002:0629b06_20": "隨行。",
    "X63n1250_002:0629b06_21": "入土地堂燒香。",
    "X63n1250_002:0629b06_22": "出外立。",
    "X63n1250_002:0629b06_23": "維那爐前面外揖。",
    "X63n1250_002:0629b07_0": "住持上香。",
    "X63n1250_002:0629b07_1": "侍者捧合。",
    "X63n1250_002:0629b07_2": "次兩班對出。",
    "X63n1250_002:0629b07_3": "有借香問訊。",
    "X63n1250_002:0629b07_4": "出班畢維那面裏念誦。",
    "X63n1250_002:0629b08_5": "回向了。",
    "X63n1250_002:0629b08_6": "鳴齋皷一通。",
    "X63n1250_002:0629b08_7": "眾歸堂赴湯。",
    "X63n1250_002:0629b09_0": "與結夏茶禮同。",
    "X63n1250_002:0629b10_0": "念誦式。",
    "X63n1250_002:0629b10_1": "(結夏)切以。",
    "X63n1250_002:0629b10_2": "薰風扇野。",
    "X63n1250_002:0629b10_3": "炎帝司方。",
    "X63n1250_002:0629b10_4": "當法王禁足之辰。",
    "X63n1250_002:0629b11_5": "是釋子護生之日。",
    "X63n1250_002:0629b11_6": "恭裒大眾。",
    "X63n1250_002:0629b11_7": "肅詣靈祠。",
    "X63n1250_002:0629b11_8": "誦持萬德洪名。",
    "X63n1250_002:0629b12_9": "回向合堂真宰。",
    "X63n1250_002:0629b12_10": "所祈。",
    "X63n1250_002:0629b12_11": "加護得遂安居。",
    "X63n1250_002:0629b12_12": "仰憑大眾念。",
    "X63n1250_002:0629b13_13": "清淨法身毗盧遮那佛(十聖號了)。",
    "X63n1250_002:0629c01_0": "回向云。",
    "X63n1250_002:0629c01_1": "上來念誦功德。",
    "X63n1250_002:0629c01_2": "回向當山土地(列位)。",
    "X63n1250_002:0629c01_3": "合堂真宰。",
    "X63n1250_002:0629c02_4": "所冀。",
    "X63n1250_002:0629c02_5": "神光叶贊。",
    "X63n1250_002:0629c02_6": "發輝有利之勛。",
    "X63n1250_002:0629c02_7": "梵苑超隆。",
    "X63n1250_002:0629c02_8": "永錫無私之慶。",
    "X63n1250_002:0629c03_9": "再勞大眾念。",
    "X63n1250_002:0629c03_10": "十方三世一切諸佛(云云)。",
    "X63n1250_002:0629c04_0": "(解夏)切以。",
    "X63n1250_002:0629c04_1": "金風扇野。",
    "X63n1250_002:0629c04_2": "白帝司方。",
    "X63n1250_002:0629c04_3": "當覺皇解制之辰。",
    "X63n1250_002:0629c04_4": "是法歲周圓之日。",
    "X63n1250_002:0629c05_5": "九旬無難。",
    "X63n1250_002:0629c05_6": "一眾咸安。",
    "X63n1250_002:0629c05_7": "誦持萬德洪名。",
    "X63n1250_002:0629c06_8": "仰畣合堂真宰。",
    "X63n1250_002:0629c06_9": "仰憑大眾念。",
    "X63n1250_002:0629c06_10": "清淨法身(云云)。",
    "X63n1250_002:0629c07_0": "(至節)切以。",
    "X63n1250_002:0629c07_1": "時臨亞歲。",
    "X63n1250_002:0629c07_2": "節屆書雲。",
    "X63n1250_002:0629c07_3": "當一陽來復之辰。",
    "X63n1250_002:0629c07_4": "乃萬彚發生之始。",
    "X63n1250_002:0629c08_5": "恭裒大眾。",
    "X63n1250_002:0629c08_6": "肅詣靈祠。",
    "X63n1250_002:0629c08_7": "誦持萬德洪名。",
    "X63n1250_002:0629c09_8": "回向合堂真宰。",
    "X63n1250_002:0629c09_9": "仰憑大眾念(云云)。",
    "X63n1250_002:0629c10_0": "(除夕)切以。",
    "X63n1250_002:0629c10_1": "化工密運。",
    "X63n1250_002:0629c10_2": "歲曆云周。",
    "X63n1250_002:0629c10_3": "咸忻四序之安。",
    "X63n1250_002:0629c10_4": "將啟三陽之慶。",
    "X63n1250_002:0629c11_5": "恭裒大眾。",
    "X63n1250_002:0629c11_6": "肅詣靈祠。",
    "X63n1250_002:0629c11_7": "誦持萬德洪名。",
    "X63n1250_002:0629c11_8": "回向合堂真宰。",
    "X63n1250_002:0629c12_9": "仰憑大眾念。",
    "X63n1250_002:0629c12_10": "清淨法身(云云)。",
    "X63n1250_002:0629c13_0": "收　請益",
    "X63n1250_002:0629d01_0": "投情請益。",
    "X63n1250_002:0629d01_1": "先詣侍司詳稟。",
    "X63n1250_002:0629d01_2": "侍者咨覆住持。",
    "X63n1250_002:0629d01_3": "厶甲上座。",
    "X63n1250_002:0629d02_0": "今晚欲詣方丈請益。",
    "X63n1250_002:0629d02_1": "如允所請。",
    "X63n1250_002:0629d02_2": "定鐘後。",
    "X63n1250_002:0629d02_3": "詣侍司伺候。",
    "X63n1250_002:0629d03_0": "侍者隨住持坐處。",
    "X63n1250_002:0629d03_1": "令秉燭裝香。",
    "X63n1250_002:0629d03_2": "引入問訊。",
    "X63n1250_002:0629d03_3": "插香一片。",
    "X63n1250_002:0629d04_0": "大展九拜。",
    "X63n1250_002:0629d04_1": "收具進前。",
    "X63n1250_002:0629d04_2": "問訊云。",
    "X63n1250_002:0629d04_3": "(某為生死事大。",
    "X63n1250_002:0629d04_4": "無常迅速。",
    "X63n1250_002:0629d04_5": "伏望。",
    "X63n1250_002:0629d04_6": "和尚慈悲。",
    "X63n1250_002:0629d04_7": "方便開示)肅躬側立。",
    "X63n1250_002:0629d05_8": "下手。",
    "X63n1250_002:0629d05_9": "諦聽法誨。",
    "X63n1250_002:0629d05_10": "垂問來歷。",
    "X63n1250_002:0629d05_11": "從實稟畣了。",
    "X63n1250_002:0629d06_0": "進前問訊。",
    "X63n1250_002:0629d06_1": "出爐則。",
    "X63n1250_002:0629d06_2": "插香一片。",
    "X63n1250_002:0629d06_3": "大展三拜。",
    "X63n1250_002:0629d06_4": "謂之謝因緣。",
    "X63n1250_002:0629d07_0": "免則觸禮。",
    "X63n1250_002:0629d07_1": "次詣侍司致謝。",
    "X63n1250_002:0629d08_0": "冬　秉拂",
    "X63n1250_002:0629d09_0": "至日午後。",
    "X63n1250_002:0629d09_1": "侍者令客頭携主杖牌拂。",
    "X63n1250_002:0629d09_2": "僕隸托柈袱。",
    "X63n1250_002:0629d09_3": "爐燭。",
    "X63n1250_002:0629d10_4": "報上首知事。",
    "X63n1250_002:0629d10_5": "維那同詣頭首寮。",
    "X63n1250_002:0629d10_6": "炷香觸禮一拜。",
    "X63n1250_002:0629d10_7": "申請云。",
    "X63n1250_002:0629d11_8": "(方丈和尚。",
    "X63n1250_002:0629d11_9": "令某等。",
    "X63n1250_002:0629d11_10": "詣寮拜請。",
    "X63n1250_002:0629d11_11": "今晚為眾秉拂)一一請已。",
    "X63n1250_002:0629d11_12": "首座同受請。",
    "X63n1250_002:0629d12_0": "次頭首令行者將牌拂主杖。",
    "X63n1250_002:0629d12_1": "即詣方丈稟辭。",
    "X63n1250_002:0629d12_2": "住持勸請了。",
    "X63n1250_002:0629d13_3": "送出。",
    "X63n1250_002:0629d13_4": "首座轉身。",
    "X63n1250_002:0629d13_5": "借法座法鼓。",
    "X63n1250_002:0629d14_0": "秉拂人。",
    "X63n1250_002:0629d14_1": "即令茶頭行者。",
    "X63n1250_002:0629d14_2": "請聖僧侍者禪客茶。",
    "X63n1250_002:0629d14_3": "復燒香一炷云。",
    "X63n1250_002:0629d15_4": "今晚秉拂。",
    "X63n1250_002:0629d15_5": "煩侍者燒香。",
    "X63n1250_002:0629d15_6": "禪客(問話)。",
    "X63n1250_002:0629d15_7": "方丈分付客頭。",
    "X63n1250_002:0629d16_8": "請頭首藥石。",
    "X63n1250_002:0629d16_9": "參前齋赴。",
    "X63n1250_002:0629d16_10": "堂司行者排辦法座前。",
    "X63n1250_002:0629d16_11": "敷罣罳椅子。",
    "X63n1250_002:0629d17_12": "設住持位。",
    "X63n1250_002:0629d17_13": "昏黃時。",
    "X63n1250_002:0629d17_14": "行者覆秉拂人。",
    "X63n1250_002:0629d17_15": "次覆方丈。",
    "X63n1250_002:0629d18_16": "鳴皷一通。",
    "X63n1250_002:0629d18_17": "眾集。",
    "X63n1250_002:0629d18_18": "小參禮同。",
    "X63n1250_002:0629d18_19": "住持歸位前立定。",
    "X63n1250_002:0629d18_20": "都寺維那侍者。",
    "X63n1250_002:0629d19_21": "同至秉拂人前。",
    "X63n1250_002:0629d19_22": "問訊。",
    "X63n1250_002:0629d19_23": "歸位。",
    "X63n1250_002:0629d19_24": "秉拂人。",
    "X63n1250_002:0629d19_25": "往住持人前問訊。",
    "X63n1250_002:0629d20_26": "次從知事班上首。",
    "X63n1250_002:0629d20_27": "問訊。",
    "X63n1250_002:0629d20_28": "巡至班末。",
    "X63n1250_002:0629d20_29": "轉同班上首問訊。",
    "X63n1250_002:0629d21_30": "巡揖至班末。",
    "X63n1250_002:0629d21_31": "舉手與大眾。",
    "X63n1250_002:0629d21_32": "普同問訊。",
    "X63n1250_002:0629d21_33": "即登(座。",
    "X63n1250_002:0629d22_34": "坐定。",
    "X63n1250_002:0629d22_35": "秉拂侍者。",
    "X63n1250_002:0629d22_36": "出班。",
    "X63n1250_002:0629d22_37": "次兩班出班。",
    "X63n1250_002:0629d22_38": "東堂西堂出班。",
    "X63n1250_002:0629d22_39": "住持出班。",
    "X63n1250_002:0629d22_40": "當起身受禮。",
    "X63n1250_002:0629d22_41": "秉拂人云。",
    "X63n1250_002:0629d22_42": "侍者請堂頭和尚)趺坐。",
    "X63n1250_002:0629d23_43": "侍者往住持前。",
    "X63n1250_002:0629d23_44": "問訊。",
    "X63n1250_002:0629d23_45": "登座。",
    "X63n1250_002:0629d23_46": "燒香一炷。",
    "X63n1250_002:0629d23_47": "提坐具問訊。",
    "X63n1250_002:0629d24_48": "側立。",
    "X63n1250_002:0629d24_49": "秉拂人。",
    "X63n1250_002:0629d24_50": "索話。",
    "X63n1250_002:0629d24_51": "問畣了。",
    "X63n1250_002:0629d24_52": "提綱。",
    "X63n1250_002:0629d24_53": "敘謝方丈合山(眾已)。",
    "X63n1250_002:0630a01_0": "舉方丈小參公桉。",
    "X63n1250_002:0630a01_1": "拈頌畢。",
    "X63n1250_002:0630a01_2": "下座。",
    "X63n1250_002:0630a01_3": "住持前問訊。",
    "X63n1250_002:0630a01_4": "復元位。",
    "X63n1250_002:0630a02_0": "次人如前行禮。",
    "X63n1250_002:0630a02_1": "登座。",
    "X63n1250_002:0630a02_2": "秉拂竟。",
    "X63n1250_002:0630a02_3": "客頭喝請湯果。",
    "X63n1250_002:0630a02_4": "下座。",
    "X63n1250_002:0630a02_5": "即懷香同詣方丈。",
    "X63n1250_002:0630a03_6": "拜謝。",
    "X63n1250_002:0630a03_7": "就座湯果。",
    "X63n1250_002:0630a03_8": "次日方丈請茶。",
    "X63n1250_002:0630a03_9": "都寺辦齋。",
    "X63n1250_002:0630a04_10": "併請茶。",
    "X63n1250_002:0630a04_11": "半齋點心。",
    "X63n1250_002:0630a04_12": "別日置管待。",
    "X63n1250_002:0630a04_13": "上堂敘謝。",
    "X63n1250_002:0630a04_14": "今諸方若解夏之熱。",
    "X63n1250_002:0630a05_15": "除夕之寒。",
    "X63n1250_002:0630a05_16": "免之。",
    "X63n1250_002:0630a05_17": "廢禮。",
    "X63n1250_002:0630a05_18": "後學無所觀望。",
    "X63n1250_002:0630a06_0": "或請立班大方西堂。",
    "X63n1250_002:0630a06_1": "在第三夜。",
    "X63n1250_002:0630a06_2": "住持小參時。",
    "X63n1250_002:0630a06_3": "委曲勸請。",
    "X63n1250_002:0630a07_4": "舉揚隨息。",
    "X63n1250_002:0630a07_5": "拈頌公桉。",
    "X63n1250_002:0630a07_6": "遞相激揚此道。",
    "X63n1250_002:0630a07_7": "豈細事哉。",
    "X63n1250_002:0630a09_0": "禪林備用卷之二"
}