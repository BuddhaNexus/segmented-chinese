[
    {
        "source_sentence": "佛說慈氏菩薩誓願陀羅尼經",
        "from": "T20n1143_001:0600b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T20n1143_001:0600b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T20n1143_001:0600b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告慈氏菩薩言。",
        "from": "T20n1143_001:0600b19_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝當諦聽有陀羅尼具大威神最上功德。",
        "from": "T20n1143_001:0600b20_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生解脫惡趣。",
        "from": "T20n1143_001:0600b20_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "轉身當得受勝妙樂。",
        "from": "T20n1143_001:0600b21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時慈氏菩薩白言世尊願為宣說。",
        "from": "T20n1143_001:0600b22_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時世尊即說陀羅尼曰。",
        "from": "T20n1143_001:0600b22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "那謨引婆誐嚩帝引一舍引吉也二合母那曳引二怛他引誐多引野三阿囉曷二合帝引三藐訖三二合沒馱引野四怛𭔞他引五阿𡁠帝引六阿𡁠當惹曳引七婆囉婆囉八味怛囉二合嚩路吉帝引九哥囉哥囉十摩賀三摩野悉帝引十一婆囉婆囉十二󰂛地曼拏微𡁠引十三三摩二合囉三摩二合囉十四阿娑摩二合引剛三摩煬十五󰂛地󰂛地十六摩賀引󰂛地娑嚩二合引賀引十七爾時慈氏菩薩。",
        "from": "T20n1143_001:0600c02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞佛世尊說陀羅尼已。",
        "from": "T20n1143_001:0600c02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "白言世尊。",
        "from": "T20n1143_001:0600c03_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼有大利益。",
        "from": "T20n1143_001:0600c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能令眾生解脫惡趣。",
        "from": "T20n1143_001:0600c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時慈氏菩薩復發願言。",
        "from": "T20n1143_001:0600c04_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有眾生於未來世末法之時。",
        "from": "T20n1143_001:0600c05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能讀誦受持者。",
        "from": "T20n1143_001:0600c05_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "設以宿業墮阿鼻獄者。",
        "from": "T20n1143_001:0600c06_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我成佛時當以佛力救拔出之。",
        "from": "T20n1143_001:0600c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復與授於阿耨多羅三藐三菩提記。",
        "from": "T20n1143_001:0600c07_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "時慈氏菩薩說是語已。",
        "from": "T20n1143_001:0600c08_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "禮佛雙足歡喜而退。",
        "from": "T20n1143_001:0600c08_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說慈氏菩薩誓願陀羅尼經",
        "from": "T20n1143_001:0600c09_100",
        "context_with_next_sentence": false
    }
]