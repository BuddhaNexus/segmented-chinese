[
    {
        "source_sentence": "法觀經",
        "from": "T15n0611_001:0240b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西晉月氏國三藏竺法護譯",
        "from": "T15n0611_001:0240b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛言：「第一、何以故數息？用息輕易知故。以世",
        "from": "T15n0611_001:0240b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "間人皆貪身，未能捨身守意，又身中事難分別，皆不信本無意不止。",
        "from": "T15n0611_001:0240c01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以有故說空意？",
        "from": "T15n0611_001:0240c01_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顛倒習息見有無，故先說息；",
        "from": "T15n0611_001:0240c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "稍稍解人意，上頭為數，已得行為第一禪。",
        "from": "T15n0611_001:0240c03_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0240c04_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「坐禪當三定。",
        "from": "T15n0611_001:0240c04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為三定？",
        "from": "T15n0611_001:0240c04_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一者、身定；",
        "from": "T15n0611_001:0240c04_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、口定；",
        "from": "T15n0611_001:0240c05_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、意定。",
        "from": "T15n0611_001:0240c05_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛痒止為身定，聲止為口定，意念止為意定。",
        "from": "T15n0611_001:0240c06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念止者，為受行常念道；",
        "from": "T15n0611_001:0240c06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聲止者，斷四惡；",
        "from": "T15n0611_001:0240c07_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "痛痒止者，為不墮貪。",
        "from": "T15n0611_001:0240c07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意在止已，身定、口定、意定，當立戒身意持。",
        "from": "T15n0611_001:0240c08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持者，為一切無所犯，又身意持名為治。",
        "from": "T15n0611_001:0240c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "治者，意持意行三十七品經故。",
        "from": "T15n0611_001:0240c10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」經言：",
        "from": "T15n0611_001:0240c10_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「所不識，所不能止，為息中不識，意去時不能止意去。",
        "from": "T15n0611_001:0240c11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是當精進，行出力守，政坐、叉手、低頭、持意，內著心中，墮自生滅。",
        "from": "T15n0611_001:0240c13_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當識意去時，已識當能止，便不墮蓋。",
        "from": "T15n0611_001:0240c14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓋在戲疑聽六根，如是為不可。",
        "from": "T15n0611_001:0240c14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0240c14_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「數息意今息數不互，何意念意為互行。",
        "from": "T15n0611_001:0240c15_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0240c16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「已三定，戒應律，為道法，愛行道。",
        "from": "T15n0611_001:0240c16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」故經言：",
        "from": "T15n0611_001:0240c16_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「貪道法行道，已坐行道。",
        "from": "T15n0611_001:0240c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上夜後夜，驚意守食，時至禺中，日西至夕，名為四守。",
        "from": "T15n0611_001:0240c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當精不離，是為勤力。",
        "from": "T15n0611_001:0240c19_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "夜半、日出、日中、晡時，是名為四正。",
        "from": "T15n0611_001:0240c19_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀經，經行，旋塔內外；",
        "from": "T15n0611_001:0240c20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自觀身體，內視五滅，外從頭至足，從足至頭，一一觀視，斯何等有？",
        "from": "T15n0611_001:0240c21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆當臭敗，節節解墮。",
        "from": "T15n0611_001:0240c22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "本無所有來作，去亦滅盡無所有。",
        "from": "T15n0611_001:0240c23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "反覆迴念，用數心，意復不解。",
        "from": "T15n0611_001:0240c23_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼見死人，諦念從頭至足，若坐、若起、若飯食，常念著心中，用堅其心，是為數念。",
        "from": "T15n0611_001:0240c25_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出息入息念滅時，已覺息滅盡時無所有；",
        "from": "T15n0611_001:0240c26_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "校計思惟，知人物皆當復盡。",
        "from": "T15n0611_001:0240c27_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意止已定，便知空。",
        "from": "T15n0611_001:0240c27_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」故經言：",
        "from": "T15n0611_001:0240c27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「一者、勤力；",
        "from": "T15n0611_001:0240c27_24",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、數念；",
        "from": "T15n0611_001:0240c28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、思惟。",
        "from": "T15n0611_001:0240c28_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0240c29_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「自觀身，有時當觀他人身，當觀身者為校計。",
        "from": "T15n0611_001:0241a01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當觀他人身者，為自觀身意著，當觀他人身死敗。",
        "from": "T15n0611_001:0241a02_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有時可自觀身，亦可觀他人身。",
        "from": "T15n0611_001:0241a02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可自觀者，為自觀身意不著；",
        "from": "T15n0611_001:0241a03_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "可觀他人身，亦為觀他人身意不著。",
        "from": "T15n0611_001:0241a04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "有時不可自觀身，亦不可觀他人身。",
        "from": "T15n0611_001:0241a05_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可自觀身者，為自見身肥白好；",
        "from": "T15n0611_001:0241a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不可觀他人身，亦為見他人身肥白好、端正、膩眉、赤絮。",
        "from": "T15n0611_001:0241a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "見肥當念膖脹，見白念死人骨，見膩眉念死人欲壞時色轉青黑，見赤絮念血皆當壞敗，何等可貪？",
        "from": "T15n0611_001:0241a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是意自觀身有三十二物者，計髮、毛、爪、齒、骨、皮肉、五藏十一事，屬地；",
        "from": "T15n0611_001:0241a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "淚、涕、唾、膿血、肪髓、汗、小便七事，屬水；",
        "from": "T15n0611_001:0241a12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "溫熱、主消食二事，屬火；",
        "from": "T15n0611_001:0241a12_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風有十二事；",
        "from": "T15n0611_001:0241a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是三十二物皆從地、水、火、風出。",
        "from": "T15n0611_001:0241a13_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為地？",
        "from": "T15n0611_001:0241a14_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人生從穀精氣，穀為地，意為種，精氣為水雨，便合生身故。",
        "from": "T15n0611_001:0241a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求一衣一食是為養氣護主。",
        "from": "T15n0611_001:0241a15_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人身為本無，故滅盡無常，得道便知身非身。",
        "from": "T15n0611_001:0241a16_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念身不久，要當死敗；",
        "from": "T15n0611_001:0241a17_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意為人種，便守意一心。",
        "from": "T15n0611_001:0241a17_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "癡人不守意，護魂神，但養四柯，為色味所欺。",
        "from": "T15n0611_001:0241a18_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂身是我計，不知惡一切從身起；",
        "from": "T15n0611_001:0241a19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "飯食貪味，便墮苦；",
        "from": "T15n0611_001:0241a20_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "往來生死不脫，卒逢惡對，魂神空去，趣善惡之道；",
        "from": "T15n0611_001:0241a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身死墮地，日夜消腐。",
        "from": "T15n0611_001:0241a21_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦本無所有，但意行，故化成身；",
        "from": "T15n0611_001:0241a22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "死皆歸土，萬物亦爾，皆當過去，是為非常。",
        "from": "T15n0611_001:0241a23_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「人不自計，多念萬端，皆不為一，以是為苦，身死索棄；",
        "from": "T15n0611_001:0241a25_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "萬物亦爾。",
        "from": "T15n0611_001:0241a25_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "滅是為已復生，生復苦，便作善惡行種栽，未知所趣，是為非身。",
        "from": "T15n0611_001:0241a26_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人行道當為斷。",
        "from": "T15n0611_001:0241a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人不知四非常，終不得道。",
        "from": "T15n0611_001:0241a27_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自計身，視諸死敗，知人物皆無所有，意便守止，得行歡喜；",
        "from": "T15n0611_001:0241a29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "已得行，心便安。",
        "from": "T15n0611_001:0241a29_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不離五者，其心一是道。",
        "from": "T15n0611_001:0241b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0241b02_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「念身，觀頭髮、腦。",
        "from": "T15n0611_001:0241b02_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念髮本無所有來，作為化成皆當腐落；",
        "from": "T15n0611_001:0241b03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腦如凝米粥，皆當臭敗；",
        "from": "T15n0611_001:0241b03_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "眼但有窌水，皆汁出空塪；",
        "from": "T15n0611_001:0241b04_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "耳但有肉，垢皆穿漏；",
        "from": "T15n0611_001:0241b04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鼻口涕唾，皆流棄消壞；",
        "from": "T15n0611_001:0241b05_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "舌、咽喉、肺、肝、心，心中惡血；",
        "from": "T15n0611_001:0241b06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "肝、膽、膈、脾著胃；",
        "from": "T15n0611_001:0241b06_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "腎著脊；",
        "from": "T15n0611_001:0241b06_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "胃中有未消食；",
        "from": "T15n0611_001:0241b06_22",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大腸有屎；",
        "from": "T15n0611_001:0241b07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "小腸泡有尿。",
        "from": "T15n0611_001:0241b07_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發便腹少增減，身死氣盡，皆當膖脹壞爛，腸、胃、屎、尿相澆灒，臭處可惡。",
        "from": "T15n0611_001:0241b09_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "下有尻肉、兩脛、兩足，肌肉稍盡，筋脈壞敗，骨鎖節節解墮。",
        "from": "T15n0611_001:0241b10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "脛脡確政，白髀骨如車輻。",
        "from": "T15n0611_001:0241b11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尻骨與脊骨相連，脊與肋骨相連，肩骨與肘臂手相連，皮革消腐，節節解墮。",
        "from": "T15n0611_001:0241b12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "頸骨與髑髏相連，肉血消盡，磨磨但有骨。",
        "from": "T15n0611_001:0241b13_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氣出不報為死人，身侹正直不復搖，風去身冷，火去黃汁從九孔流出，水去死不復食，地去三四日，色轉正青，膿血從口鼻耳目中出正赤，肌肉壞敗骨正白，久久轉黑作灰土。",
        "from": "T15n0611_001:0241b17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "視郭外臭死人，死人骨如是，自身亦如是，皆當滅盡是為空。",
        "from": "T15n0611_001:0241b19_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "出息盡時便知空，知空便知身空。",
        "from": "T15n0611_001:0241b19_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T15n0611_001:0241b20_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知命近在息空故。",
        "from": "T15n0611_001:0241b20_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0241b21_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是意當先觀思惟，滅念待自意便守意。",
        "from": "T15n0611_001:0241b22_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意不出身為道人，待在外為萬物。",
        "from": "T15n0611_001:0241b22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念在內為思，識欲滅念待，當念物非常敗，皆非我所，我亦非物主。",
        "from": "T15n0611_001:0241b24_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意念死時，持何等去？",
        "from": "T15n0611_001:0241b24_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "持善、持一、必持經，多作多樂故。",
        "from": "T15n0611_001:0241b25_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0241b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「是汝物持去，其餘一切，皆非我所。",
        "from": "T15n0611_001:0241b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意當識念：",
        "from": "T15n0611_001:0241b26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等恩愛會當別離，各自消腐，念之但亂人意，墮人罪，要當還身守淨，趣泥洹道。",
        "from": "T15n0611_001:0241b28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「佛從一心至九道，念四色皆當消滅。",
        "from": "T15n0611_001:0241b29_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謂人死四、五日，欲臭壞，色轉正青；",
        "from": "T15n0611_001:0241c01_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "五日、六日，膿血從口、鼻、耳、目中出正赤；",
        "from": "T15n0611_001:0241c02_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後肌肉壞敗，腸胃生蟲還自食，皮革消腐，骨顏正白，久久轉黑作灰土。",
        "from": "T15n0611_001:0241c04_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明地、水、火、風空，皆非我所意。",
        "from": "T15n0611_001:0241c04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝從無數世以來，亦為人作妻子、奴婢，亦作畜生、牛、馬、蟲、象，勤苦重負，亦為人所屠、剝、膾、炙。",
        "from": "T15n0611_001:0241c06_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今為人，復所人作妻子、奴婢，亦取畜生屠、剝、膾、刺、斫，自在身死，皆當復受。",
        "from": "T15n0611_001:0241c08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道人！",
        "from": "T15n0611_001:0241c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝寧見死人不？",
        "from": "T15n0611_001:0241c08_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "氣絕便無所知，身挺正直便臭壞可惡，諦念便畏不欲見。",
        "from": "T15n0611_001:0241c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故不怖一心？",
        "from": "T15n0611_001:0241c10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一心令人上天得泥洹道。",
        "from": "T15n0611_001:0241c11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛知九道皆空，無所有故，還就一心。",
        "from": "T15n0611_001:0241c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道人急滅念，待無所他知，便至拘深國，行拘深俱在所，見用不在故不見。",
        "from": "T15n0611_001:0241c13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0241c14_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「意欲貪念非常敗，婬當念對，瞋恚念等心，愚癡念本，一切行非常，無為安隱。",
        "from": "T15n0611_001:0241c15_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人不知非常，終不去貪，亦不離薜荔道。",
        "from": "T15n0611_001:0241c16_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間所有如夢耳，夢飯食見好，寤便不見。",
        "from": "T15n0611_001:0241c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間所有如是，生便死，適成便壞，要皆歸空，當何等可貪？",
        "from": "T15n0611_001:0241c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人有妻子、財產亦爾。",
        "from": "T15n0611_001:0241c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T15n0611_001:0241c19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人治生得錢利時，若家室合會喜樂，譬如飛鳥聚會，亦皆無常，一旦別離，亦便不見。",
        "from": "T15n0611_001:0241c21_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "正使有憂恐萬苦，意在生死中，為日積罪。",
        "from": "T15n0611_001:0241c22_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "黠人自約少欲，趣求一衣一食，從定意行，不求地止，常還身守淨，斷求念空。",
        "from": "T15n0611_001:0241c24_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」問曰：",
        "from": "T15n0611_001:0241c25_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「行道守意根本從何起？",
        "from": "T15n0611_001:0241c25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0241c25_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「天地成後，人從十五天上來下，壽無有夭逝，生死五道從六衰起。",
        "from": "T15n0611_001:0241c27_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "人生心意本自善，無有貪愛、痛痒、思想、生死、識，為耳、目、鼻、口所欺。",
        "from": "T15n0611_001:0241c28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目光視色，耳聲音，鼻知香，口知味，身知寒溫粗細，心為作十事，成五陰；",
        "from": "T15n0611_001:0242a01_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意為識合，為六衰；",
        "from": "T15n0611_001:0242a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "因作善惡行種栽，從是便有老、病、死，生五道。",
        "from": "T15n0611_001:0242a02_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "求道欲斷生死故，自守意，止目色，止耳聲，止鼻香，止口味，止身如，斷六衰，行觀懷心念，坐禪滅意識。",
        "from": "T15n0611_001:0242a04_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得道者，五陰悉滅；",
        "from": "T15n0611_001:0242a05_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "知本無，便念空想、空徑向泥洹。",
        "from": "T15n0611_001:0242a06_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問所以守意者？",
        "from": "T15n0611_001:0242a06_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "意為識主行故惡，六衰為禍行，種五道根本。",
        "from": "T15n0611_001:0242a07_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道人精思，自守四意，欲止無邪，念識思想走。",
        "from": "T15n0611_001:0242a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何道人欲滅念識思想，當一切行非常，斷身十事。",
        "from": "T15n0611_001:0242a09_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "身、口、意三者，從五陰六衰乃止。",
        "from": "T15n0611_001:0242a10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三定者，口無所知為口定，身無所知為身定，意無所復念為意定。",
        "from": "T15n0611_001:0242a11_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」佛言：",
        "from": "T15n0611_001:0242a12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「道有四要，界持啟封乃得出。",
        "from": "T15n0611_001:0242a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何等為四？",
        "from": "T15n0611_001:0242a12_21",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一為識苦，不復向萬物，是為得出三惡道啟；",
        "from": "T15n0611_001:0242a13_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二者、知身非身，便壞身不復愛，是為從人得出門第六天上啟；",
        "from": "T15n0611_001:0242a15_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三者、知非常意，不復向，是為得出十八天啟；",
        "from": "T15n0611_001:0242a16_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "四者、知空滅空，是為得出二十八天啟。",
        "from": "T15n0611_001:0242a17_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "空滅乃為墮道故。",
        "from": "T15n0611_001:0242a17_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」經言：",
        "from": "T15n0611_001:0242a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "「行道覺者得出，謂覺苦空非身非常。",
        "from": "T15n0611_001:0242a18_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "得出者，謂得出四要界，得第一禪。",
        "from": "T15n0611_001:0242a19_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上七天無有身景。",
        "from": "T15n0611_001:0242a19_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "何以故？",
        "from": "T15n0611_001:0242a19_20",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行道壞身故。",
        "from": "T15n0611_001:0242a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "」法觀經",
        "from": "T15n0611_001:0242a21_100",
        "context_with_next_sentence": false
    }
]