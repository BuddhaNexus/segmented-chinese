[
    {
        "source_sentence": "靈巖寺和尚請來法門道具等",
        "from": "T55n2164_001:1071c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "目錄",
        "from": "T55n2164_001:1071c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上表入唐還學沙門圓行言。圓行載次戊午。銜命",
        "from": "T55n2164_001:1071c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "請益之列。",
        "from": "T55n2164_001:1071c07_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "訪道西海之外。",
        "from": "T55n2164_001:1071c07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其年臘月得到長安城。",
        "from": "T55n2164_001:1071c08_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歲次己未正月十三日。",
        "from": "T55n2164_001:1071c08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依奏奉勅住青龍寺。",
        "from": "T55n2164_001:1071c09_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "幸遇彼寺灌頂教主法號義真和尚以為師主。",
        "from": "T55n2164_001:1071c10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其大威德則惠果阿闍梨弟子同門義操和尚付法之弟子也。",
        "from": "T55n2164_001:1071c11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明閑三教。",
        "from": "T55n2164_001:1071c11_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙通五部。",
        "from": "T55n2164_001:1071c12_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法之棟梁。",
        "from": "T55n2164_001:1071c12_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國之所歸圓行幸賴聖朝之鴻恩。",
        "from": "T55n2164_001:1071c13_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師主之深慈。",
        "from": "T55n2164_001:1071c13_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "決疑兩部之大法。",
        "from": "T55n2164_001:1071c13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "開悟諸尊之密法。",
        "from": "T55n2164_001:1071c14_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "閏正月二日蒙授阿闍梨位灌頂也。",
        "from": "T55n2164_001:1071c15_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "左街功德使并僧錄和尚供奉大德金剛門徒悉集道場共致隨喜。",
        "from": "T55n2164_001:1071c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "斯法也觀心月輪則居住凡位備佛陀之德。",
        "from": "T55n2164_001:1071c17_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦口密言則不逕長劫頓登大覺之位。",
        "from": "T55n2164_001:1071c18_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "故龍樹言。",
        "from": "T55n2164_001:1071c18_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘羊而行。",
        "from": "T55n2164_001:1071c19_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "願難致遠策馬而馳漸期差疾。",
        "from": "T55n2164_001:1071c19_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "乘神通行發念則到。",
        "from": "T55n2164_001:1071c20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則顯密之別也。",
        "from": "T55n2164_001:1071c20_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦祕密經言。",
        "from": "T55n2164_001:1071c21_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一善男子建立道場修念三密。",
        "from": "T55n2164_001:1071c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其國界內無七難災。",
        "from": "T55n2164_001:1071c22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "國王大臣日日增長福壽。",
        "from": "T55n2164_001:1071c22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則真言之功矣。",
        "from": "T55n2164_001:1072a01_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雖然波浪沷漢。",
        "from": "T55n2164_001:1072a01_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "風雨漂舶。",
        "from": "T55n2164_001:1072a01_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "越彼鯨海平歸聖境。",
        "from": "T55n2164_001:1072a02_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是則聖力之所能也。",
        "from": "T55n2164_001:1072a02_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "伏惟皇帝陛下功超玄極道冠混元。",
        "from": "T55n2164_001:1072a03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讚堯寶圖。",
        "from": "T55n2164_001:1072a03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復禹丕續。",
        "from": "T55n2164_001:1072a04_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悲蒼生而濡足。",
        "from": "T55n2164_001:1072a04_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鍾佛囑而垂衣。",
        "from": "T55n2164_001:1072a04_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陛下興隆佛法。",
        "from": "T55n2164_001:1072a05_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沒馱之舍利浸波遠來。",
        "from": "T55n2164_001:1072a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以陛下慈育海內。",
        "from": "T55n2164_001:1072a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密之經法過海遙到也。",
        "from": "T55n2164_001:1072a06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕法傳來非是無以也。",
        "from": "T55n2164_001:1072a07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如來本有福智之力。",
        "from": "T55n2164_001:1072a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "法界本性加持之力矣。",
        "from": "T55n2164_001:1072a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大日如來。",
        "from": "T55n2164_001:1072a08_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛薩埵。",
        "from": "T55n2164_001:1072a08_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍猛菩薩。",
        "from": "T55n2164_001:1072a09_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "龍智菩薩。",
        "from": "T55n2164_001:1072a09_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛三藏。",
        "from": "T55n2164_001:1072a09_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不空三藏。",
        "from": "T55n2164_001:1072a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惠果和尚。",
        "from": "T55n2164_001:1072a10_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義操和尚。",
        "from": "T55n2164_001:1072a10_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "義真和尚。",
        "from": "T55n2164_001:1072a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次第相傳。",
        "from": "T55n2164_001:1072a10_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即授圓行。",
        "from": "T55n2164_001:1072a11_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所授經法舍利道具等目錄在別。",
        "from": "T55n2164_001:1072a11_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "謹以奉進輕黷威嚴伏增戰越。",
        "from": "T55n2164_001:1072a12_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門圓行誠恐誠惶謹言。",
        "from": "T55n2164_001:1072a13_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承和六年十二月十九日入唐還學沙門傳燈大法師位圓行上表入唐沙門圓行承和六年請來經佛道具目錄入唐沙門圓行承和六年請來經佛道具目錄都合七種。",
        "from": "T55n2164_001:1072a18_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "新請來真言經法。",
        "from": "T55n2164_001:1072a19_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都二十六部三十三卷梵字三部四卷顯教經論疏章等。",
        "from": "T55n2164_001:1072a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都四十部八十八卷已上三種。",
        "from": "T55n2164_001:1072a22_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "總六十九部一百二十三卷。",
        "from": "T55n2164_001:1072a22_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛舍利都三千餘粒付屬物三種佛像曼荼羅圖樣都十二種道具都十六箇新請來真言經法新請來真言經法奇特最勝金輪佛頂念儀軌一卷白傘蓋佛頂儀軌一卷一字頂輪王念誦儀軌一卷依忉利天王宮會所說經譯蘇悉地法一部二卷諸佛境界攝真實經一部三卷般若三藏譯降三世儀軌一卷遍智阿闍梨指授與金剛弟子入壇受灌頂法經一卷金剛吉祥大成就品經一卷亦名五眼經出金剛頂峰經念誦結護法普通諸部一卷最上乘受菩提心戒及心地祕決一卷三藏善無畏依密教出弟子一行記總釋陀羅尼義讚一卷三藏不空奉詔譯水自在經一卷亦名佛說聖者摩尼跋馱羅尼菩薩陀羅尼經金剛界瑜伽略述三十七尊心要一卷不空三藏說胎藏教法并金剛界金剛名號一卷內供奉義操集隨求自在陀羅尼功德經一部二卷寶雲三藏譯普賢菩薩行願讚一卷梵漢兩語相對著本辨梵文漢字功德及出生一切文字根本次第一卷北方毘沙門天王隨求護法真言一卷不空三藏別行翻譯大自在天法則儀軌一卷金剛頂經曼殊室利菩薩五字心陀羅尼品一卷三藏金剛智譯慈氏菩薩略修愈誐念誦法一部二卷三藏善無畏譯大方廣如來藏經一卷不空三藏譯佛說普遍智藏般若波羅蜜多心經一卷拔濟苦難陀羅尼經一卷三藏不空譯不空羂索神變真言經第六第三十兩卷大聖文殊菩薩八字陀羅尼念誦法一卷三藏菩提票使淨智金剛譯尊勝佛頂真言修瑜伽經一部二卷三藏善無畏譯大日經序一卷五字陀羅尼頌一卷一切如來蓮花大曼荼羅品一卷摩利支天經一卷佛說十力經一卷佛說迴向輪經一卷佛說十地經九卷梵字梵字佛母孔雀明王經一部三卷唐梵文字一卷閑解此文字一二年間堪翻經右已上新來。",
        "from": "T55n2164_001:1072c12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "梵字普賢菩薩行願讚一卷梵漢兩字相對梵字悉曇一卷右二部雖先來而為用證本請來。",
        "from": "T55n2164_001:1072c15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "顯教經論疏章等顯教經論疏章等金剛三昧本性清淨不壞不滅經一卷為用證本再請來莊嚴菩提經一卷羅什三藏譯梵網經下卷楷本佛說入佛境界經一部二卷楞伽抄一部五卷缺第一楞伽經集義一部五卷楞伽經大義證成鈔一部二卷花嚴法界觀玄鏡一卷澄觀法師撰般若心經義一卷智開法師撰般若心經要決義一卷般若心經註二卷一卷淨覺師註般若心經疏一卷献誠法師撰金般般若經依天親菩薩論讚釋疏一部二卷崇聖寺沙門鹿𭫁撰大佛頂經疏一部三卷維慇師述最勝經疏六卷沼法師述為證本再請求阿彌陀經疏一卷大乘基師撰阿彌陀經隨緣義鈔一部智首法師集襄陽嘉祥抄一卷道印集記百法明門論疏一卷忠法師述成唯識論疏一部十卷清素法師述新集百法手抄一部六卷百法論義聚一部十卷清素法師述成唯識論疏十卷清素法師述法苑珠林一部十卷道法師撰百論疏一卷娥眉山沙門惠高述中論旨歸一卷百喻伽陀一卷內供奉義琳法師述內明義心一卷道巚法師撰內明略集記一卷大乘觀心論一卷玄奘法師譯比丘含註戒本一卷太一山沙門道宣述依觀經等明般舟三昧行道往生讚一卷善導法師撰轉經行道願往生淨土法事讚一部二卷善道師撰小止觀一卷天台山智顗禪師撰為用證本所請觀念阿彌陀佛相海三昧功德法門一卷俱舍論頌疏一部六卷圓暉法師撰劫章論頌一卷世親菩薩造三藏義淨譯劫章頌疏一卷峯山沙門遍智集南宗定是非論一卷河南府獨孤師撰右件顯教經論疏章或未度。",
        "from": "T55n2164_001:1073b07_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或雖度來文字謬落。",
        "from": "T55n2164_001:1073b08_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍請來。",
        "from": "T55n2164_001:1073b08_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛舍利三千餘粒佛舍利三千餘粒一百粒青龍寺傳教大德義真阿闍梨付授二百餘粒中天竺三藏難陀付授二千七百餘粒靈仙大德弟子付授付屬物付屬物菩提樹葉一枚著莖中天竺三藏難陀付授沈香念珠一貫義真阿闍梨付授梵夾二具一具中天竺三藏難陀付授一具靈仙大德弟子付授佛像曼荼羅圖樣佛像曼荼羅圖樣胎藏壇圖一帳著梵漢兩字尊號阿嚕力觀音曼荼羅一帳釋迦牟尼佛在菩提樹下像一軀依天竺僧奏大唐天皇施行金輪佛頂輪王像一軀火頭金剛像一軀金剛童子忿怒王像一軀大吉祥天菩薩像一軀摩利支天菩薩像一軀訶梨底母像一軀日月光明世尊像一軀水月觀自在菩薩像一軀普賢菩薩像一軀右件尊像為用證本圖畫其樣奉請。",
        "from": "T55n2164_001:1073c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "道具道具獨鈷金剛杵一　三鈷金剛杵一五鈷金剛杵一　三鈷鈴一五鈷鈴一　輪一羯麼杵四　金剛橛四率都波鈴一　商佉螺一右件傳法阿闍梨執持供養修行三昧耶也。",
        "from": "T55n2164_001:1073c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以前經法道具舍利顯教經論疏章等請來如件。",
        "from": "T55n2164_001:1073c12_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但雖真言宗一百二十三部祕法儀軌等子細勘校請來。",
        "from": "T55n2164_001:1073c13_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先入唐大師空海阿闍梨延曆年中請來已了。",
        "from": "T55n2164_001:1073c14_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "仍更不載目錄焉。",
        "from": "T55n2164_001:1073c14_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "承和六年十二月十九日。",
        "from": "T55n2164_001:1073c15_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入唐沙門傳燈大法師圓行上。",
        "from": "T55n2164_001:1073c16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右街僧錄三教講論大德沙門體虛。",
        "from": "T55n2164_001:1073c17_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉本使仇驃騎怗三覺供奉大德六人就青龍寺與日本國傳燈大法師位圓行語論本教玄理具名如後。",
        "from": "T55n2164_001:1073c20_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "保壽寺內供奉臨壇大德沙門常辨。",
        "from": "T55n2164_001:1073c21_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "章敬寺內供奉禪宗大德沙門弘辨。",
        "from": "T55n2164_001:1073c22_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "招福寺內供奉講論大德沙門齊高。",
        "from": "T55n2164_001:1074a01_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "興唐寺內供奉講論大德沙門光顥。",
        "from": "T55n2164_001:1074a02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雲花寺內供奉講論大德沙門海岸。",
        "from": "T55n2164_001:1074a03_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "青龍寺內供奉講論大德沙門圓鏡。",
        "from": "T55n2164_001:1074a04_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "右件大德等所與圓行大德語論教門策目並錄申聞。",
