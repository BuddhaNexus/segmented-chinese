[
    {
        "source_sentence": "諸星母陀羅尼經",
        "from": "T21n1302_001:0420a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "沙門法成於甘州脩多寺譯",
        "from": "T21n1302_001:0420a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是我聞。一時薄伽梵住於曠野大聚落中。",
        "from": "T21n1302_001:0420a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天及龍藥叉羅剎乾闥婆阿須羅迦樓羅緊那羅莫呼落迦諸魔。",
        "from": "T21n1302_001:0420a08_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "日月熒或太白鎮星餘星歲星羅睺長尾星神二十八宿諸大眾等。",
        "from": "T21n1302_001:0420a09_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悉皆讚歎諸大金剛誓願之句。",
        "from": "T21n1302_001:0420a10_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "威加莊嚴師子座上與諸菩薩同會一處。",
        "from": "T21n1302_001:0420a11_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其名曰金剛手菩薩摩訶薩。",
        "from": "T21n1302_001:0420a12_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛忿怒菩薩摩訶薩。",
        "from": "T21n1302_001:0420a12_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛部菩薩摩訶薩。",
        "from": "T21n1302_001:0420a13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛弓菩薩摩訶薩。",
        "from": "T21n1302_001:0420a13_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛主菩薩摩訶薩。",
        "from": "T21n1302_001:0420a14_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛莊嚴菩薩摩訶薩。",
        "from": "T21n1302_001:0420a14_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛光菩薩摩訶薩。",
        "from": "T21n1302_001:0420a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "觀自在菩薩摩訶薩。",
        "from": "T21n1302_001:0420a15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "普見菩薩摩訶薩。",
        "from": "T21n1302_001:0420a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世間吉祥菩薩摩訶薩。",
        "from": "T21n1302_001:0420a16_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "蓮華幢菩薩摩訶薩。",
        "from": "T21n1302_001:0420a17_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "廣面菩薩摩訶薩。",
        "from": "T21n1302_001:0420a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "華眼菩薩摩訶薩。",
        "from": "T21n1302_001:0420a17_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "妙吉祥菩薩摩訶薩。",
        "from": "T21n1302_001:0420a18_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "慈氏菩薩摩訶薩等。",
        "from": "T21n1302_001:0420a18_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸大菩薩僧前後圍遶瞻仰說法。",
        "from": "T21n1302_001:0420a19_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其法名為廣大莊嚴如意寶珠初中後善句義美妙無雜清淨清白梵行。",
        "from": "T21n1302_001:0420a21_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時金剛手菩薩觀於大眾從座而起。",
        "from": "T21n1302_001:0420a22_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以自神力旋遶世尊數百千匝。",
        "from": "T21n1302_001:0420a23_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作禮前住自具倚持。",
        "from": "T21n1302_001:0420a24_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以善跏趺瞻視大眾。",
        "from": "T21n1302_001:0420a24_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以金剛掌安自心上而白佛言。",
        "from": "T21n1302_001:0420a25_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊有其惡星。",
        "from": "T21n1302_001:0420a25_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色刑極惡具猛利心。",
        "from": "T21n1302_001:0420a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "色刑忿怒惱亂有情。",
        "from": "T21n1302_001:0420a26_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奪其精氣或奪財物或奪於命。",
        "from": "T21n1302_001:0420a27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "長壽有情令作短壽。",
        "from": "T21n1302_001:0420a27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是惱亂一切有情。",
        "from": "T21n1302_001:0420a28_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "為是等故。",
        "from": "T21n1302_001:0420a28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊關顯法門。",
        "from": "T21n1302_001:0420a28_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "守護一切有情之類。",
        "from": "T21n1302_001:0420a29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊告曰。",
        "from": "T21n1302_001:0420a29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "善哉善哉。",
        "from": "T21n1302_001:0420a29_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝興大悲為利一切諸有情故。",
        "from": "T21n1302_001:0420a30_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "問於如來甚深密義。",
        "from": "T21n1302_001:0420b01_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝今諦聽善思念之。",
        "from": "T21n1302_001:0420b01_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我當說其惡星瞋怒破壞之法。",
        "from": "T21n1302_001:0420b02_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及說供養行施念誦祕密之義。",
        "from": "T21n1302_001:0420b02_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若行供養當供養　　若作其惡當作惡",
        "from": "T21n1302_001:0420b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸星刑色等　　云何而令生歡喜",
        "from": "T21n1302_001:0420b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸天及與諸非天　　緊那羅等及諸龍",
        "from": "T21n1302_001:0420b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸藥叉等并羅剎　　人及迦多富多那",
        "from": "T21n1302_001:0420b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猛利威德諸大神　　瞋怒云何而殄滅",
        "from": "T21n1302_001:0420b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "祕密言辭供養法　　今當次第而宣說",
        "from": "T21n1302_001:0420b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦如來從自心上而放慈心遊戲光明。",
        "from": "T21n1302_001:0420b10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "入於諸星頂髻足中。",
        "from": "T21n1302_001:0420b10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "尋時日月一切星神從座而起。",
        "from": "T21n1302_001:0420b11_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "以諸天供即以供養釋迦如來。",
        "from": "T21n1302_001:0420b11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "膝輪著地合掌作禮而白佛言。",
        "from": "T21n1302_001:0420b12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "世尊如來應供正真等覺利益我等。",
        "from": "T21n1302_001:0420b13_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願世尊宣說法門。",
        "from": "T21n1302_001:0420b13_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令於我等而聚集已守衛防護說法之師。",
        "from": "T21n1302_001:0420b14_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "令得吉慶遠離刀杖消滅毒藥作結界。",
        "from": "T21n1302_001:0420b15_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦如來即便為說供養星法及以密言陀羅尼曰。",
        "from": "T21n1302_001:0420b17_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "　唵謨呼羅迦耶莎訶　唵尸儅奢蔽莎訶　唵落落當伽俱麼囉也莎訶　唵報䫂也報䫂也莎訶　唵報伽阿悉婆䫂世莎訶　唵訶須囉薩多麼也莎訶　唵吃哩悉囊簸囉那也莎訶　唵阿蜜多畢哩耶莎訶　唵藉底羯多蔽莎訶金剛手。",
        "from": "T21n1302_001:0420b24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此則是彼八星祕密心呪。",
        "from": "T21n1302_001:0420b24_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "讀便成辦。",
        "from": "T21n1302_001:0420b24_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當作十二指一色香壇中安供養。",
        "from": "T21n1302_001:0420b25_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或瓦或銅金銀等器奉獻供養。",
        "from": "T21n1302_001:0420b26_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一供養當誦一百八遍。",
        "from": "T21n1302_001:0420b27_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手。",
        "from": "T21n1302_001:0420b27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後誦此諸星母陀羅尼祕密言辭滿足七遍。",
        "from": "T21n1302_001:0420b28_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸星而作守護。",
        "from": "T21n1302_001:0420b28_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所有貧窮悉得解脫。",
        "from": "T21n1302_001:0420b29_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "命將欲盡而得長壽。",
        "from": "T21n1302_001:0420b29_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手。",
        "from": "T21n1302_001:0420b29_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若苾芻苾芻尼烏波索迦烏波斯迦及餘有情之類。",
        "from": "T21n1302_001:0420c02_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若歷耳根而不中夭。",
        "from": "T21n1302_001:0420c02_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手。",
        "from": "T21n1302_001:0420c02_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸星壇中設供養已每日而讀誦者。",
        "from": "T21n1302_001:0420c03_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "彼說法師一切諸星如彼所願悉令滿足。",
        "from": "T21n1302_001:0420c04_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "與彼同類貧匱諸事皆得消滅。",
        "from": "T21n1302_001:0420c05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時釋迦如來即便為說諸星母陀羅尼。",
        "from": "T21n1302_001:0420c06_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說呪曰。",
        "from": "T21n1302_001:0420c07_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "南謨佛陀耶　南謨婆桚囉馱羅耶　南麼鉢麼達囉耶　南麼薩婆迦囉訶　南麼薩婆阿奢波囉甫迦喃　南謨諾奢多囉喃　南謨埵爹奢囉尸喃　怛也沒底沒底　簸窒囉簸窒囉　鉢明鉢明　娑囉娑囉　鉢娑囉鉢娑囉　三婆囉三婆囉　基多耶基多耶　麼囉麼囉　麼訖陀麼訖陀　伽䫂耶　薩婆碧建　俱嚕俱嚕　晉那晉那　乞舍波耶乞舍波耶　扇胝𭥐低　䫂麼耶䫂麼曳　咄嚕多儞　達奢耶羯麼喃　薄伽薄帝　落叉耶落叉耶　麼那婆波哩波藍　娑囉波薩都王悉荼　薩婆吃訶　那乞奢多囉　陂多麼簸儞　簸囉儞　簸囉薄伽薄底　麼訶摩曳　薩馱耶咄悉荼麼奢耶　波波儞　麼贊底贊底　都嚕都嚕　贊底謀榆謀榆　資謀資謀訶婆訶蔽　屋吃哩屋吃訶　爹迷甫囉耶迷　末努多藍　薩婆󰌳他迦多　阿低悉低　娑麼耶莎訶　唵莎訶　吽莎訶　紇哩莎訶　吽莎訶　󰌳航莎訶　鉢麼䫂囉莎訶　阿窒哆耶莎訶　蘇磨耶莎訶　䫂囉儞須多耶莎訶　沒他耶莎訶　勃多悉波低曳莎訶　𬿟伽囉耶沙訶　吃奢那跋那耶莎訶　囉訶蔽莎訶　𪁰多蔽莎訶　沒他耶莎訶　簸桚囉達囉耶莎訶　鉢麼䫂囉莎訶　拘麼囉耶莎訶　諾乞沙多囉難莎訶　薩婆鳥鉢多囉簸難莎訶　唵薩婆簸比底叭叭莎訶金剛手。",
        "from": "T21n1302_001:0421a05_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是諸星母陀羅尼祕密呪句。",
        "from": "T21n1302_001:0421a05_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "成辦一切諸事根本。",
        "from": "T21n1302_001:0421a06_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "金剛手。",
        "from": "T21n1302_001:0421a06_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此陀羅尼祕密呪句。",
        "from": "T21n1302_001:0421a06_19",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "從於九月白月七日而起於首具足長淨。",
        "from": "T21n1302_001:0421a07_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至十四日供養諸星。",
        "from": "T21n1302_001:0421a08_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "而受持之月十五日。",
        "from": "T21n1302_001:0421a08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能晝夜而讀誦者。",
        "from": "T21n1302_001:0421a09_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "至滿九年無其死畏。",
        "from": "T21n1302_001:0421a09_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無星流墮落怖畏。",
        "from": "T21n1302_001:0421a10_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦無月宿作惡怖畏而憶宿命。",
        "from": "T21n1302_001:0421a10_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦能供養一切諸星。",
        "from": "T21n1302_001:0421a11_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切諸星隨其所願而授與之。",
        "from": "T21n1302_001:0421a12_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸星禮世尊已讚言善哉。",
        "from": "T21n1302_001:0421a12_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "忽然不現。",
        "from": "T21n1302_001:0421a13_2",
        "context_with_next_sentence": true
