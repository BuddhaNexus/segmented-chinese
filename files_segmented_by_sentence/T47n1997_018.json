{
    "T47n1997_018:0796a05_0": "圓悟佛果禪師語錄卷第十八",
    "T47n1997_018:0796a07_0": "宋平江府虎丘山門人紹隆等編",
    "T47n1997_018:0796a08_0": "拈古下",
    "T47n1997_018:0796a09_0": "舉。",
    "T47n1997_018:0796a09_1": "僧問馬大師。",
    "T47n1997_018:0796a09_2": "離四句絕百非。",
    "T47n1997_018:0796a09_3": "請師直指某甲西來意。",
    "T47n1997_018:0796a10_4": "大師云。",
    "T47n1997_018:0796a10_5": "我今日勞倦。",
    "T47n1997_018:0796a10_6": "不能為汝說。",
    "T47n1997_018:0796a11_0": "問取智藏去。",
    "T47n1997_018:0796a11_1": "師著語云錯。",
    "T47n1997_018:0796a11_2": "僧問智藏。",
    "T47n1997_018:0796a11_3": "藏云。",
    "T47n1997_018:0796a11_4": "我今日頭痛。",
    "T47n1997_018:0796a12_5": "不能為汝說。",
    "T47n1997_018:0796a12_6": "問取海兄。",
    "T47n1997_018:0796a12_7": "師著語云錯。",
    "T47n1997_018:0796a13_8": "僧問海。",
    "T47n1997_018:0796a13_9": "海云。",
    "T47n1997_018:0796a13_10": "我到這裏却不會。",
    "T47n1997_018:0796a13_11": "師著語云錯。",
    "T47n1997_018:0796a14_12": "僧回舉似馬大師。",
    "T47n1997_018:0796a14_13": "大師云。",
    "T47n1997_018:0796a14_14": "藏頭白海頭黑。",
    "T47n1997_018:0796a15_0": "師著語云錯錯。",
    "T47n1997_018:0796a15_1": "師拈云。",
    "T47n1997_018:0796a15_2": "若是明眼漢。",
    "T47n1997_018:0796a15_3": "一舉便知落處。",
    "T47n1997_018:0796a16_4": "白雲先師道。",
    "T47n1997_018:0796a16_5": "這僧擔一擔懞懂。",
    "T47n1997_018:0796a16_6": "換得箇不安樂。",
    "T47n1997_018:0796a17_7": "馬大師道。",
    "T47n1997_018:0796a17_8": "藏頭白海頭黑。",
    "T47n1997_018:0796a17_9": "白雲拈云。",
    "T47n1997_018:0796a18_10": "風后先生只知其一不知其二。",
    "T47n1997_018:0796a18_11": "只如山僧下五箇錯。",
    "T47n1997_018:0796a19_12": "且道。",
    "T47n1997_018:0796a19_13": "落在什麼處。",
    "T47n1997_018:0796a19_14": "莫將閑學解。",
    "T47n1997_018:0796a19_15": "埋沒祖師心。",
    "T47n1997_018:0796a21_0": "舉。",
    "T47n1997_018:0796a21_1": "僧問雲門。",
    "T47n1997_018:0796a21_2": "如何是法身向上事。",
    "T47n1997_018:0796a21_3": "門云。",
    "T47n1997_018:0796a21_4": "向上與汝道即不難。",
    "T47n1997_018:0796a22_5": "作麼生會法身。",
    "T47n1997_018:0796a22_6": "僧云。",
    "T47n1997_018:0796a22_7": "請和尚鑑。",
    "T47n1997_018:0796a23_8": "門云。",
    "T47n1997_018:0796a23_9": "鑑則且致。",
    "T47n1997_018:0796a23_10": "爾作麼生會法身。",
    "T47n1997_018:0796a23_11": "僧云。",
    "T47n1997_018:0796a24_0": "與麼與麼。",
    "T47n1997_018:0796a24_1": "門云。",
    "T47n1997_018:0796a24_2": "這箇是長連床上學得底。",
    "T47n1997_018:0796a24_3": "我問爾。",
    "T47n1997_018:0796a25_4": "法身還喫飯也無。",
    "T47n1997_018:0796a25_5": "僧無語。",
    "T47n1997_018:0796a25_6": "雪竇云。",
    "T47n1997_018:0796a25_7": "將成九仞之山。",
    "T47n1997_018:0796a26_8": "不進一簣之土。",
    "T47n1997_018:0796a26_9": "保福云。",
    "T47n1997_018:0796a26_10": "缺他一粒也不得。",
    "T47n1997_018:0796a27_11": "又古德云。",
    "T47n1997_018:0796a27_12": "喚什麼作飯。",
    "T47n1997_018:0796a27_13": "師拈云。",
    "T47n1997_018:0796a27_14": "雲門可謂驅耕夫牛。",
    "T47n1997_018:0796a28_15": "奪饑人食。",
    "T47n1997_018:0796a28_16": "權衡佛祖龜鑑宗乘。",
    "T47n1997_018:0796a29_17": "所以後來尊宿各出眼目扶立宗風。",
    "T47n1997_018:0796a29_18": "雖然如是只明得法身邊事。",
    "T47n1997_018:0796b01_19": "未明得法身向上事。",
    "T47n1997_018:0796b02_0": "且如何是法身向上事。",
    "T47n1997_018:0796b02_1": "域中無向背。",
    "T47n1997_018:0796b02_2": "閫外有權衡。",
    "T47n1997_018:0796b04_0": "舉。",
    "T47n1997_018:0796b04_1": "保壽開堂。",
    "T47n1997_018:0796b04_2": "三聖推出一僧。",
    "T47n1997_018:0796b04_3": "壽便打。",
    "T47n1997_018:0796b04_4": "聖云。",
    "T47n1997_018:0796b05_0": "恁麼為人。",
    "T47n1997_018:0796b05_1": "非但瞎却這僧眼。",
    "T47n1997_018:0796b05_2": "瞎却鎮州一城人眼去在。",
    "T47n1997_018:0796b06_3": "壽便歸方丈。",
    "T47n1997_018:0796b06_4": "師拈云。",
    "T47n1997_018:0796b06_5": "保壽全機擔荷。",
    "T47n1997_018:0796b07_6": "不妨奇特。",
    "T47n1997_018:0796b07_7": "要且只得一邊。",
    "T47n1997_018:0796b07_8": "當時若善發明臨濟正法眼藏。",
    "T47n1997_018:0796b08_9": "待三聖道恁麼為人。",
    "T47n1997_018:0796b08_10": "非但瞎却這僧眼。",
    "T47n1997_018:0796b09_11": "瞎却鎮州一城人眼去在。",
    "T47n1997_018:0796b09_12": "便與本分草料。",
    "T47n1997_018:0796b10_13": "何故。",
    "T47n1997_018:0796b10_14": "一不做二不休。",
    "T47n1997_018:0796b11_0": "舉。",
    "T47n1997_018:0796b11_1": "金牛行食次。",
    "T47n1997_018:0796b11_2": "問龐居士。",
    "T47n1997_018:0796b11_3": "生心受食淨名已呵。",
    "T47n1997_018:0796b12_4": "去此二途。",
    "T47n1997_018:0796b12_5": "居士還甘否。",
    "T47n1997_018:0796b12_6": "士云。",
    "T47n1997_018:0796b12_7": "當時善現豈不作家牛。",
    "T47n1997_018:0796b13_8": "云豈干他事。",
    "T47n1997_018:0796b13_9": "士云。",
    "T47n1997_018:0796b13_10": "食到口邊被人奪却。",
    "T47n1997_018:0796b14_11": "金牛便行食。",
    "T47n1997_018:0796b14_12": "士云。",
    "T47n1997_018:0796b14_13": "不消一句子。",
    "T47n1997_018:0796b14_14": "師拈云。",
    "T47n1997_018:0796b15_15": "善現作家金牛奇特。",
    "T47n1997_018:0796b15_16": "盡被龐居士一時領過了也。",
    "T47n1997_018:0796b16_17": "只如龐居士道不消一句子。",
    "T47n1997_018:0796b16_18": "且道。",
    "T47n1997_018:0796b16_19": "是那一句。",
    "T47n1997_018:0796b17_20": "端坐受供養。",
    "T47n1997_018:0796b17_21": "施主常安樂。",
    "T47n1997_018:0796b18_0": "舉。",
    "T47n1997_018:0796b18_1": "僧問石門。",
    "T47n1997_018:0796b18_2": "年窮歲盡時如何。",
    "T47n1997_018:0796b18_3": "門云。",
    "T47n1997_018:0796b18_4": "東村王老夜燒錢。",
    "T47n1997_018:0796b19_5": "師拈云。",
    "T47n1997_018:0796b19_6": "可謂神通妙用。",
    "T47n1997_018:0796b19_7": "僧復問開先暹和尚。",
    "T47n1997_018:0796b20_8": "年窮歲盡時如何。",
    "T47n1997_018:0796b20_9": "暹云。",
    "T47n1997_018:0796b20_10": "依舊孟春猶寒。",
    "T47n1997_018:0796b21_11": "師拈云。",
    "T47n1997_018:0796b21_12": "不妨田地穩密。",
    "T47n1997_018:0796b21_13": "忽有問道林。",
    "T47n1997_018:0796b22_0": "年窮歲盡時如何。",
    "T47n1997_018:0796b22_1": "只對他道。",
    "T47n1997_018:0796b22_2": "定盤星上轉風車。",
    "T47n1997_018:0796b24_0": "舉。",
    "T47n1997_018:0796b24_1": "三聖道。",
    "T47n1997_018:0796b24_2": "我逢人則出。",
    "T47n1997_018:0796b24_3": "出則不為人。",
    "T47n1997_018:0796b24_4": "興化道。",
    "T47n1997_018:0796b25_5": "我逢人則不出。",
    "T47n1997_018:0796b25_6": "出則便為人。",
    "T47n1997_018:0796b25_7": "師拈云。",
    "T47n1997_018:0796b25_8": "一人在孤峯頂上土面灰頭。",
    "T47n1997_018:0796b26_9": "一人在十字街頭斬釘截鐵。",
    "T47n1997_018:0796b27_10": "有頭有尾同死同生。",
    "T47n1997_018:0796b27_11": "且道。",
    "T47n1997_018:0796b27_12": "出則不為人底是。",
    "T47n1997_018:0796b28_13": "出則便為人底是。",
    "T47n1997_018:0796b28_14": "竪起拂子云。",
    "T47n1997_018:0796b28_15": "萬古碧潭空界月。",
    "T47n1997_018:0796b29_16": "再三撈摝始應知。",
    "T47n1997_018:0796c01_0": "舉。",
    "T47n1997_018:0796c01_1": "龍牙問翠微。",
    "T47n1997_018:0796c01_2": "如何是祖師西來意。",
    "T47n1997_018:0796c01_3": "微云。",
    "T47n1997_018:0796c01_4": "與我過禪版來。",
    "T47n1997_018:0796c02_5": "牙取禪版與翠微。",
    "T47n1997_018:0796c02_6": "微接得便打。",
    "T47n1997_018:0796c03_0": "牙云。",
    "T47n1997_018:0796c03_1": "打則任打。",
    "T47n1997_018:0796c03_2": "要且無祖師西來意。",
    "T47n1997_018:0796c03_3": "牙又問臨濟。",
    "T47n1997_018:0796c04_4": "如何是祖師西來意。",
    "T47n1997_018:0796c04_5": "濟云。",
    "T47n1997_018:0796c04_6": "與我過蒲團來。",
    "T47n1997_018:0796c05_7": "牙取蒲團與臨濟。",
    "T47n1997_018:0796c05_8": "濟接得便打。",
    "T47n1997_018:0796c05_9": "牙云。",
    "T47n1997_018:0796c05_10": "打即任打。",
    "T47n1997_018:0796c06_11": "要且無祖師西來意。",
    "T47n1997_018:0796c06_12": "住院後僧問。",
    "T47n1997_018:0796c06_13": "和尚當年見二尊宿。",
    "T47n1997_018:0796c07_14": "是肯伊不肯伊。",
    "T47n1997_018:0796c07_15": "牙云。",
    "T47n1997_018:0796c07_16": "肯即肯。",
    "T47n1997_018:0796c08_17": "要且無祖師西來意。",
    "T47n1997_018:0796c08_18": "師拈云。",
    "T47n1997_018:0796c08_19": "這漢參來莽鹵。",
    "T47n1997_018:0796c09_20": "學處顢頇。",
    "T47n1997_018:0796c09_21": "雖然顧後瞻前。",
    "T47n1997_018:0796c09_22": "爭奈藏身露影。",
    "T47n1997_018:0796c10_0": "既是無祖師西來意。",
    "T47n1997_018:0796c10_1": "用肯作麼。",
    "T47n1997_018:0796c10_2": "若向箇裏辨得。",
    "T47n1997_018:0796c11_3": "山僧與爾拄杖子。",
    "T47n1997_018:0796c11_4": "若辨不得。",
    "T47n1997_018:0796c11_5": "和鼻孔一時失却。",
    "T47n1997_018:0796c13_0": "舉。",
    "T47n1997_018:0796c13_1": "僧問雲門。",
    "T47n1997_018:0796c13_2": "樹彫葉落時如何。",
    "T47n1997_018:0796c13_3": "門云。",
    "T47n1997_018:0796c13_4": "體露金風。",
    "T47n1997_018:0796c14_5": "師拈云。",
    "T47n1997_018:0796c14_6": "雲門善巧方便。",
    "T47n1997_018:0796c14_7": "可謂即事即理即隱即顯。",
    "T47n1997_018:0796c15_8": "三句可辨一鏃遼空。",
    "T47n1997_018:0796c15_9": "雖然猶是粘皮著骨。",
    "T47n1997_018:0796c16_10": "若有問蔣山。",
    "T47n1997_018:0796c16_11": "樹彫葉落時如何。",
    "T47n1997_018:0796c16_12": "只對他道。",
    "T47n1997_018:0796c17_13": "撑天拄地。",
    "T47n1997_018:0796c17_14": "且道。",
    "T47n1997_018:0796c17_15": "是三句是一鏃。",
    "T47n1997_018:0796c17_16": "試玉須經火。",
    "T47n1997_018:0796c18_17": "求珠不離泥。",
    "T47n1997_018:0796c19_0": "舉。",
    "T47n1997_018:0796c19_1": "懶瓚和尚云。",
    "T47n1997_018:0796c19_2": "吾有一言絕慮忘緣。",
    "T47n1997_018:0796c19_3": "巧說不得只要心傳。",
    "T47n1997_018:0796c20_4": "師拈云。",
    "T47n1997_018:0796c20_5": "這老漢。",
    "T47n1997_018:0796c20_6": "魚行水濁。",
    "T47n1997_018:0796c20_7": "漏逗不少。",
    "T47n1997_018:0796c21_8": "雖然如是。",
    "T47n1997_018:0796c21_9": "箇中或有解忘緣能絕慮者出來道。",
    "T47n1997_018:0796c22_10": "作麼生是心傳。",
    "T47n1997_018:0796c22_11": "若也會得。",
    "T47n1997_018:0796c22_12": "已傳了也。",
    "T47n1997_018:0796c23_0": "若會不得。",
    "T47n1997_018:0796c23_1": "心即且置。",
    "T47n1997_018:0796c23_2": "畢竟是那箇一言。",
    "T47n1997_018:0796c23_3": "歸堂歇去。",
    "T47n1997_018:0796c25_0": "舉。",
    "T47n1997_018:0796c25_1": "雪竇云。",
    "T47n1997_018:0796c25_2": "乾坤之內宇宙之間。",
    "T47n1997_018:0796c25_3": "中有一寶掛在壁上。",
    "T47n1997_018:0796c26_4": "達磨九年面壁。",
    "T47n1997_018:0796c26_5": "不敢正眼覷著。",
    "T47n1997_018:0796c26_6": "如今衲僧要見。",
    "T47n1997_018:0796c27_7": "劈脊便打。",
    "T47n1997_018:0796c27_8": "師拈云。",
    "T47n1997_018:0796c27_9": "雪竇妙中之妙奇中之奇。",
    "T47n1997_018:0796c28_10": "向佛祖頭上提持。",
    "T47n1997_018:0796c28_11": "衲僧頂門鑿竅。",
    "T47n1997_018:0796c29_0": "不妨自在。",
    "T47n1997_018:0796c29_1": "要且只見錐頭利。",
    "T47n1997_018:0796c29_2": "不見鑿頭方。",
    "T47n1997_018:0796c29_3": "若是蔣山則不然。",
    "T47n1997_018:0797a01_4": "乾坤之內宇宙之間。",
    "T47n1997_018:0797a01_5": "中有一寶。",
    "T47n1997_018:0797a02_6": "竪起拄杖子云。",
    "T47n1997_018:0797a02_7": "在拄杖頭上。",
    "T47n1997_018:0797a02_8": "拈起也天回地轉。",
    "T47n1997_018:0797a03_9": "放下也草偃風行。",
    "T47n1997_018:0797a03_10": "有時八臂三頭。",
    "T47n1997_018:0797a03_11": "有時壁立千仞。",
    "T47n1997_018:0797a04_12": "如今莫道衲僧要見。",
    "T47n1997_018:0797a04_13": "直饒千聖出來列祖齊至。",
    "T47n1997_018:0797a05_14": "並須倒退三千里。",
    "T47n1997_018:0797a05_15": "敢問大眾。",
    "T47n1997_018:0797a05_16": "且道。",
    "T47n1997_018:0797a06_17": "什麼人合得受用。",
    "T47n1997_018:0797a06_18": "分付天台木上座。",
    "T47n1997_018:0797a06_19": "突出南山鼈鼻蛇。",
    "T47n1997_018:0797a07_20": "攛拄杖下座。",
    "T47n1997_018:0797a08_0": "舉。",
    "T47n1997_018:0797a08_1": "僧問大梅。",
    "T47n1997_018:0797a08_2": "如何是祖師西來意。",
    "T47n1997_018:0797a08_3": "梅云。",
    "T47n1997_018:0797a08_4": "西來無意。",
    "T47n1997_018:0797a09_5": "僧舉似鹽官。",
    "T47n1997_018:0797a09_6": "官云。",
    "T47n1997_018:0797a09_7": "一箇棺木兩箇死漢。",
    "T47n1997_018:0797a10_0": "雪竇云。",
    "T47n1997_018:0797a10_1": "三箇也有。",
    "T47n1997_018:0797a10_2": "師拈云。",
    "T47n1997_018:0797a10_3": "一串穿却。",
    "T47n1997_018:0797a11_0": "舉。",
    "T47n1997_018:0797a11_1": "靈雲頌云。",
    "T47n1997_018:0797a11_2": "三十年來尋劍客。",
    "T47n1997_018:0797a11_3": "幾回葉落又抽枝。",
    "T47n1997_018:0797a12_4": "自從一見桃華後。",
    "T47n1997_018:0797a12_5": "直至如今更不疑。",
    "T47n1997_018:0797a12_6": "玄沙云。",
    "T47n1997_018:0797a13_7": "諦當甚諦當。",
    "T47n1997_018:0797a13_8": "敢保老兄未徹在。",
    "T47n1997_018:0797a13_9": "師拈云。",
    "T47n1997_018:0797a14_0": "唱彌高和彌寡。",
    "T47n1997_018:0797a14_1": "雪曲陽春。",
    "T47n1997_018:0797a14_2": "殺人刀活人劍。",
    "T47n1997_018:0797a14_3": "利物之要。",
    "T47n1997_018:0797a15_4": "有般底尚拘聞見隨語作解。",
    "T47n1997_018:0797a15_5": "便說相謾誰不知。",
    "T47n1997_018:0797a16_6": "日下孤燈已失先照。",
    "T47n1997_018:0797a16_7": "畢竟什麼處是未徹處。",
    "T47n1997_018:0797a17_8": "壺中日月長。",
    "T47n1997_018:0797a18_0": "舉。",
    "T47n1997_018:0797a18_1": "玄沙問僧。",
    "T47n1997_018:0797a18_2": "近離甚處。",
    "T47n1997_018:0797a18_3": "僧云瑞巖。",
    "T47n1997_018:0797a18_4": "沙云。",
    "T47n1997_018:0797a18_5": "瑞巖有何言句。",
    "T47n1997_018:0797a19_6": "僧云。",
    "T47n1997_018:0797a19_7": "長喚主人公。",
    "T47n1997_018:0797a19_8": "自云喏喏。",
    "T47n1997_018:0797a19_9": "惺惺著。",
    "T47n1997_018:0797a20_10": "他日莫受人謾。",
    "T47n1997_018:0797a20_11": "沙云。",
    "T47n1997_018:0797a20_12": "一等是弄精魂。",
    "T47n1997_018:0797a20_13": "也甚奇怪。",
    "T47n1997_018:0797a21_14": "復云。",
    "T47n1997_018:0797a21_15": "何不且在彼中住。",
    "T47n1997_018:0797a21_16": "僧云。",
    "T47n1997_018:0797a21_17": "瑞巖遷化了也。",
    "T47n1997_018:0797a22_18": "沙云。",
    "T47n1997_018:0797a22_19": "如今還喚得應麼。",
    "T47n1997_018:0797a22_20": "僧無語。",
    "T47n1997_018:0797a22_21": "雪竇云。",
    "T47n1997_018:0797a23_22": "蒼天蒼天。",
    "T47n1997_018:0797a23_23": "師拈云。",
    "T47n1997_018:0797a23_24": "萬丈寒潭徹底月在當心。",
    "T47n1997_018:0797a24_25": "千尺巖松倚天風生幽谷。",
    "T47n1997_018:0797a24_26": "直得凜凜孤標澄澄風彩。",
    "T47n1997_018:0797a25_27": "及至月離碧嶂影落雲衢。",
    "T47n1997_018:0797a25_28": "遂乃當面蹉却。",
    "T47n1997_018:0797a26_29": "當時這僧若是箇漢。",
    "T47n1997_018:0797a26_30": "待伊道即今還喚得應麼。",
    "T47n1997_018:0797a27_31": "當下便喝。",
    "T47n1997_018:0797a27_32": "非唯把定玄沙要津。",
    "T47n1997_018:0797a27_33": "亦與瑞巖老子出氣。",
    "T47n1997_018:0797a29_0": "舉。",
    "T47n1997_018:0797a29_1": "僧問風穴。",
    "T47n1997_018:0797a29_2": "九夏賞勞。",
    "T47n1997_018:0797a29_3": "請師言薦。",
    "T47n1997_018:0797a29_4": "穴云。",
    "T47n1997_018:0797a29_5": "一把香芻拈未暇。",
    "T47n1997_018:0797b01_6": "六鐶金錫響搖空。",
    "T47n1997_018:0797b01_7": "師拈云。",
    "T47n1997_018:0797b02_0": "風穴用得當陽事。",
    "T47n1997_018:0797b02_1": "不妨風流儒雅。",
    "T47n1997_018:0797b02_2": "要且只道得途中句。",
    "T47n1997_018:0797b03_3": "或有問道林。",
    "T47n1997_018:0797b03_4": "九夏賞勞請師言薦。",
    "T47n1997_018:0797b04_0": "只對他道。",
    "T47n1997_018:0797b04_1": "四絕堂邊呈瑞氣。",
    "T47n1997_018:0797b04_2": "三湘江畔奪高標。",
    "T47n1997_018:0797b06_0": "舉。",
    "T47n1997_018:0797b06_1": "舍利弗一日入城。",
    "T47n1997_018:0797b06_2": "見月上女出城。",
    "T47n1997_018:0797b06_3": "舍利弗問云。",
    "T47n1997_018:0797b07_4": "什麼處去。",
    "T47n1997_018:0797b07_5": "女云。",
    "T47n1997_018:0797b07_6": "如舍利弗恁麼去。",
    "T47n1997_018:0797b07_7": "舍利弗云。",
    "T47n1997_018:0797b08_8": "我方入城汝方出城。",
    "T47n1997_018:0797b08_9": "何言如舍利弗恁麼去。",
    "T47n1997_018:0797b09_10": "女云。",
    "T47n1997_018:0797b09_11": "諸佛弟子當住何處。",
    "T47n1997_018:0797b09_12": "弗云。",
    "T47n1997_018:0797b09_13": "諸佛弟子當住大涅槃。",
    "T47n1997_018:0797b10_14": "女云。",
    "T47n1997_018:0797b10_15": "諸佛弟子既住大涅槃。",
    "T47n1997_018:0797b11_0": "我如舍利弗恁麼去。",
    "T47n1997_018:0797b11_1": "師拈云。",
    "T47n1997_018:0797b11_2": "住無所住行無所行。",
    "T47n1997_018:0797b12_3": "見無所見用無所用。",
    "T47n1997_018:0797b12_4": "各人脚跟下廓同太虛。",
    "T47n1997_018:0797b13_5": "如十日並照觸處光輝。",
    "T47n1997_018:0797b13_6": "苟知恁麼。",
    "T47n1997_018:0797b13_7": "則與月上女同證無生得不退轉。",
    "T47n1997_018:0797b14_8": "隨去來處無不皆在大解脫中。",
    "T47n1997_018:0797b15_9": "三世諸佛鼻孔一時穿却。",
    "T47n1997_018:0797b15_10": "說什麼如舍利弗恁麼去。",
    "T47n1997_018:0797b17_0": "舉。",
    "T47n1997_018:0797b17_1": "師祖問南泉云。",
    "T47n1997_018:0797b17_2": "摩尼珠人不識。",
    "T47n1997_018:0797b17_3": "如來藏裏親收得。",
    "T47n1997_018:0797b18_4": "如何是藏。",
    "T47n1997_018:0797b18_5": "泉云。",
    "T47n1997_018:0797b18_6": "王老師與汝往來者是。",
    "T47n1997_018:0797b19_7": "祖云。",
    "T47n1997_018:0797b19_8": "直得不往來時如何。",
    "T47n1997_018:0797b19_9": "泉云。",
    "T47n1997_018:0797b19_10": "亦是藏。",
    "T47n1997_018:0797b20_0": "祖云。",
    "T47n1997_018:0797b20_1": "如何是珠。",
    "T47n1997_018:0797b20_2": "泉云。",
    "T47n1997_018:0797b20_3": "師祖。",
    "T47n1997_018:0797b20_4": "祖應喏。",
    "T47n1997_018:0797b20_5": "泉云。",
    "T47n1997_018:0797b20_6": "去汝不會我語。",
    "T47n1997_018:0797b21_7": "師拈云。",
    "T47n1997_018:0797b21_8": "南泉一期垂手。",
    "T47n1997_018:0797b21_9": "收放擒縱則不無。",
    "T47n1997_018:0797b22_10": "要且未見向上事在。",
    "T47n1997_018:0797b22_11": "只如盡大地是如來藏。",
    "T47n1997_018:0797b23_12": "向什麼處著珠。",
    "T47n1997_018:0797b23_13": "盡大地是摩尼珠。",
    "T47n1997_018:0797b24_0": "喚什麼作藏。",
    "T47n1997_018:0797b24_1": "若明得有轉身處。",
    "T47n1997_018:0797b24_2": "許他只具一隻眼。",
    "T47n1997_018:0797b26_0": "舉。",
    "T47n1997_018:0797b26_1": "僧問香林。",
    "T47n1997_018:0797b26_2": "如何是衲衣下事。",
    "T47n1997_018:0797b26_3": "林云。",
    "T47n1997_018:0797b26_4": "臘月火燒山。",
    "T47n1997_018:0797b27_5": "師拈云。",
    "T47n1997_018:0797b27_6": "舉一明三衲僧孔竅。",
    "T47n1997_018:0797b27_7": "千差一轍本分鉗鎚。",
    "T47n1997_018:0797b28_8": "雖然如是。",
    "T47n1997_018:0797b28_9": "或有問道林。",
    "T47n1997_018:0797b28_10": "如何是衲衣下事。",
    "T47n1997_018:0797b29_11": "只對他道。",
    "T47n1997_018:0797b29_12": "綿包特石。",
    "T47n1997_018:0797c01_0": "舉。",
    "T47n1997_018:0797c01_1": "南泉問僧。",
    "T47n1997_018:0797c01_2": "昨夜好風。",
    "T47n1997_018:0797c01_3": "僧云。",
    "T47n1997_018:0797c01_4": "昨夜好風。",
    "T47n1997_018:0797c01_5": "泉云。",
    "T47n1997_018:0797c02_6": "吹折門前一株松。",
    "T47n1997_018:0797c02_7": "僧亦云。",
    "T47n1997_018:0797c02_8": "吹折門前一株松。",
    "T47n1997_018:0797c03_9": "南泉又見僧問。",
    "T47n1997_018:0797c03_10": "昨夜好風。",
    "T47n1997_018:0797c03_11": "僧云。",
    "T47n1997_018:0797c03_12": "是什麼風。",
    "T47n1997_018:0797c04_13": "泉云。",
    "T47n1997_018:0797c04_14": "吹折門前一株松。",
    "T47n1997_018:0797c04_15": "泉云。",
    "T47n1997_018:0797c04_16": "一得一失。",
    "T47n1997_018:0797c05_0": "師拈云。",
    "T47n1997_018:0797c05_1": "大凡酬唱隨機著眼。",
    "T47n1997_018:0797c05_2": "辨龍蛇別緇素。",
    "T47n1997_018:0797c06_0": "所謂打鼓弄琵琶。",
    "T47n1997_018:0797c06_1": "相逢兩會家。",
    "T47n1997_018:0797c06_2": "只如南泉道一得一失。",
    "T47n1997_018:0797c07_3": "敢問。",
    "T47n1997_018:0797c07_4": "阿那箇得阿那箇失。",
    "T47n1997_018:0797c07_5": "到這裏須是向上人始得。",
    "T47n1997_018:0797c08_6": "還委悉麼。",
    "T47n1997_018:0797c08_7": "鵝王擇乳素非鴨類。",
    "T47n1997_018:0797c10_0": "舉。",
    "T47n1997_018:0797c10_1": "修山主頌云。",
    "T47n1997_018:0797c10_2": "二破不成一。",
    "T47n1997_018:0797c10_3": "一法鎮長存。",
    "T47n1997_018:0797c10_4": "若人一二解。",
    "T47n1997_018:0797c11_5": "永劫受沈淪。",
    "T47n1997_018:0797c11_6": "師拈云。",
    "T47n1997_018:0797c11_7": "直似倚天長劍凜凜神威。",
    "T47n1997_018:0797c12_8": "向平。",
    "T47n1997_018:0797c12_9": "坦坦處壁立千仞。",
    "T47n1997_018:0797c12_10": "壁立千仞處平坦坦。",
    "T47n1997_018:0797c13_11": "雖只道得一半。",
    "T47n1997_018:0797c13_12": "道林即不然。",
    "T47n1997_018:0797c13_13": "二破不成一。",
    "T47n1997_018:0797c14_14": "一法亦不存。",
    "T47n1997_018:0797c14_15": "不作一二解。",
    "T47n1997_018:0797c14_16": "永劫受沈淪。",
    "T47n1997_018:0797c16_0": "舉。",
    "T47n1997_018:0797c16_1": "道吾問雲巖。",
    "T47n1997_018:0797c16_2": "脫却殼漏子。",
    "T47n1997_018:0797c16_3": "向什麼處相見去。",
    "T47n1997_018:0797c17_4": "巖云。",
    "T47n1997_018:0797c17_5": "向不生不滅處相見。",
    "T47n1997_018:0797c17_6": "師拈云。",
    "T47n1997_018:0797c17_7": "太周遮生。",
    "T47n1997_018:0797c18_8": "道吾云。",
    "T47n1997_018:0797c18_9": "何不道非不生不滅處。",
    "T47n1997_018:0797c18_10": "相見師拈云。",
    "T47n1997_018:0797c19_11": "太孤峻生。",
    "T47n1997_018:0797c19_12": "大凡善知識舉一語垂一機。",
    "T47n1997_018:0797c19_13": "要明生死根源。",
    "T47n1997_018:0797c20_14": "令一切人明心見性去。",
    "T47n1997_018:0797c20_15": "豈不快哉。",
    "T47n1997_018:0797c21_16": "或有問道林脫却。",
    "T47n1997_018:0797c21_17": "殼漏子向什麼處相見。",
    "T47n1997_018:0797c22_0": "只對他道。",
    "T47n1997_018:0797c22_1": "何處不逢渠。",
    "T47n1997_018:0797c23_0": "舉。",
    "T47n1997_018:0797c23_1": "修山主頌云。",
    "T47n1997_018:0797c23_2": "欲識解脫道。",
    "T47n1997_018:0797c23_3": "諸法不相到。",
    "T47n1997_018:0797c23_4": "眼耳絕見聞。",
    "T47n1997_018:0797c24_5": "聲色鬧浩浩。",
    "T47n1997_018:0797c24_6": "師拈云。",
    "T47n1997_018:0797c24_7": "聲不到耳色不到眼。",
    "T47n1997_018:0797c25_8": "聲色交參萬法成現。",
    "T47n1997_018:0797c25_9": "且道。",
    "T47n1997_018:0797c25_10": "還踏著解脫道也無。",
    "T47n1997_018:0797c26_11": "不省這箇意。",
    "T47n1997_018:0797c26_12": "修行徒苦幸。",
    "T47n1997_018:0797c27_0": "舉。",
    "T47n1997_018:0797c27_1": "僧問石鞏。",
    "T47n1997_018:0797c27_2": "生死到來如何回避。",
    "T47n1997_018:0797c27_3": "鞏云。",
    "T47n1997_018:0797c27_4": "這的無生死。",
    "T47n1997_018:0797c28_5": "師拈云。",
    "T47n1997_018:0797c28_6": "還識這的麼。",
    "T47n1997_018:0797c28_7": "俊鶻捎空去。",
    "T47n1997_018:0797c28_8": "懵鳥泊籬頭。",
    "T47n1997_018:0798a01_0": "舉。",
    "T47n1997_018:0798a01_1": "古者道。",
    "T47n1997_018:0798a01_2": "生死中有佛則不迷生死。",
    "T47n1997_018:0798a01_3": "又有道。",
    "T47n1997_018:0798a02_0": "生死中無佛則無生死。",
    "T47n1997_018:0798a02_1": "師拈云。",
    "T47n1997_018:0798a02_2": "是則是。",
    "T47n1997_018:0798a02_3": "兩口金剛寶劍。",
    "T47n1997_018:0798a03_4": "要且拂掠虛空。",
    "T47n1997_018:0798a03_5": "金山則不然。",
    "T47n1997_018:0798a03_6": "生死為諸佛根基。",
    "T47n1997_018:0798a04_7": "諸佛乃生死爐鞴。",
    "T47n1997_018:0798a04_8": "若解嶮絕承當。",
    "T47n1997_018:0798a05_9": "即證六通八解。",
    "T47n1997_018:0798a06_0": "頌古上",
    "T47n1997_018:0798a07_0": "舉。",
    "T47n1997_018:0798a07_1": "德山小參示眾云。",
    "T47n1997_018:0798a07_2": "老僧今夜不答話。",
    "T47n1997_018:0798a07_3": "問話者三十棒。",
    "T47n1997_018:0798a08_4": "時有僧出禮拜。",
    "T47n1997_018:0798a08_5": "德山便打。",
    "T47n1997_018:0798a08_6": "僧云。",
    "T47n1997_018:0798a08_7": "某甲話也未問。",
    "T47n1997_018:0798a09_8": "為什麼打某甲。",
    "T47n1997_018:0798a09_9": "德山云。",
    "T47n1997_018:0798a09_10": "爾是甚處人。",
    "T47n1997_018:0798a10_11": "僧云。",
    "T47n1997_018:0798a10_12": "新羅人。",
    "T47n1997_018:0798a10_13": "山云。",
    "T47n1997_018:0798a10_14": "未跨船舷。",
    "T47n1997_018:0798a10_15": "好與三十棒。",
    "T47n1997_018:0798a11_16": "法眼云。",
    "T47n1997_018:0798a11_17": "大小德山。",
    "T47n1997_018:0798a11_18": "話作兩橛。",
    "T47n1997_018:0798a11_19": "圓明云。",
    "T47n1997_018:0798a12_0": "大小德山。",
    "T47n1997_018:0798a12_1": "龍頭蛇尾。",
    "T47n1997_018:0798a12_2": "雪竇云。",
    "T47n1997_018:0798a12_3": "德山握閫外威權。",
    "T47n1997_018:0798a13_4": "有當斷不斷不招其亂底劍。",
    "T47n1997_018:0798a13_5": "要識新羅僧。",
    "T47n1997_018:0798a14_0": "只是撞著露柱底瞎漢。",
    "T47n1997_018:0798a15_0": "大冶烹金忽雷驚春。",
    "T47n1997_018:0798a15_1": "草木秀發光輝日新。",
    "T47n1997_018:0798a15_2": "不費纖毫力。",
    "T47n1997_018:0798a16_3": "擒下天麒麟。",
    "T47n1997_018:0798a16_4": "全威殺活得自在。",
    "T47n1997_018:0798a16_5": "千古照耀同氷輪。",
    "T47n1997_018:0798a17_6": "話作兩橛句中眼活。",
    "T47n1997_018:0798a17_7": "龍頭蛇尾以指喻指。",
    "T47n1997_018:0798a18_8": "撞著露柱瞎衲僧。",
    "T47n1997_018:0798a18_9": "塞斷咽喉無出氣。",
    "T47n1997_018:0798a19_10": "擬議尋思隔萬山。",
    "T47n1997_018:0798a19_11": "咭嘹舌頭三千里。",
    "T47n1997_018:0798a20_0": "舉。",
    "T47n1997_018:0798a20_1": "德山挾複子。",
    "T47n1997_018:0798a20_2": "到溈山上法堂。",
    "T47n1997_018:0798a20_3": "從東過西從西過東。",
    "T47n1997_018:0798a21_4": "溈山默坐不顧。",
    "T47n1997_018:0798a21_5": "德山云。",
    "T47n1997_018:0798a21_6": "無無便下去。",
    "T47n1997_018:0798a22_0": "復云。",
    "T47n1997_018:0798a22_1": "也不得草草。",
    "T47n1997_018:0798a22_2": "遂具威儀見溈山。",
    "T47n1997_018:0798a22_3": "提起坐具云。",
    "T47n1997_018:0798a23_4": "和尚。",
    "T47n1997_018:0798a23_5": "溈山擬取拂子。",
    "T47n1997_018:0798a23_6": "德山便喝。",
    "T47n1997_018:0798a23_7": "當時背法堂著草鞋便去。",
    "T47n1997_018:0798a24_8": "溈山至晚問首座。",
    "T47n1997_018:0798a24_9": "適來新到在什麼處。",
    "T47n1997_018:0798a25_10": "首座云。",
    "T47n1997_018:0798a25_11": "當時背法堂著草鞋便去。",
    "T47n1997_018:0798a26_12": "溈山云。",
    "T47n1997_018:0798a26_13": "還識此子麼。",
    "T47n1997_018:0798a26_14": "已後向孤峯頂上蟠結草庵。",
    "T47n1997_018:0798a27_15": "呵佛罵祖去在。",
    "T47n1997_018:0798a28_0": "大用不拘今古楷模。",
    "T47n1997_018:0798a28_1": "倒拈蝎尾平捋虎鬚。",
    "T47n1997_018:0798a28_2": "若非深辯端倪。",
    "T47n1997_018:0798a29_3": "何以坐觀成敗。",
    "T47n1997_018:0798a29_4": "俊處穎脫囊錐。",
    "T47n1997_018:0798b01_0": "高來卷舒方外。",
    "T47n1997_018:0798b01_1": "孤峯頂上浪滔天。",
    "T47n1997_018:0798b01_2": "正令當行百雜碎。",
    "T47n1997_018:0798b02_3": "咄。",
    "T47n1997_018:0798b03_0": "舉。",
    "T47n1997_018:0798b03_1": "南泉參百丈涅槃和尚。",
    "T47n1997_018:0798b03_2": "丈問。",
    "T47n1997_018:0798b03_3": "從上諸聖還有不為人說底法麼。",
    "T47n1997_018:0798b04_4": "泉云有。",
    "T47n1997_018:0798b04_5": "丈云。",
    "T47n1997_018:0798b04_6": "作麼生是不為人說底法。",
    "T47n1997_018:0798b05_7": "泉云。",
    "T47n1997_018:0798b05_8": "不是心不是佛不是物。",
    "T47n1997_018:0798b06_0": "丈云。",
    "T47n1997_018:0798b06_1": "說了也。",
    "T47n1997_018:0798b06_2": "泉云。",
    "T47n1997_018:0798b06_3": "普願只恁麼。",
    "T47n1997_018:0798b06_4": "未審和尚如何。",
    "T47n1997_018:0798b07_5": "丈云。",
    "T47n1997_018:0798b07_6": "我又不是善知識。",
    "T47n1997_018:0798b07_7": "爭知有說不說。",
    "T47n1997_018:0798b07_8": "泉云。",
    "T47n1997_018:0798b08_9": "普願不會。",
    "T47n1997_018:0798b08_10": "丈云。",
    "T47n1997_018:0798b08_11": "我太殺為爾說了也。",
    "T47n1997_018:0798b09_0": "鸞膠續斷絃。",
    "T47n1997_018:0798b09_1": "猊血化驢乳。",
    "T47n1997_018:0798b09_2": "從來不為人。",
    "T47n1997_018:0798b09_3": "今古參佛祖。",
    "T47n1997_018:0798b10_4": "箭既離絃無返回。",
    "T47n1997_018:0798b10_5": "將欲奪之必固與。",
    "T47n1997_018:0798b11_0": "語時默默時語。",
    "T47n1997_018:0798b11_1": "人從陳州來。",
    "T47n1997_018:0798b11_2": "却往許州去。",
    "T47n1997_018:0798b12_0": "舉。",
    "T47n1997_018:0798b12_1": "百丈再參馬祖。",
    "T47n1997_018:0798b12_2": "祖舉拂子。",
    "T47n1997_018:0798b12_3": "丈云。",
    "T47n1997_018:0798b12_4": "即此用離此用。",
    "T47n1997_018:0798b13_5": "祖掛拂子於舊處侍立少頃。",
    "T47n1997_018:0798b13_6": "祖云。",
    "T47n1997_018:0798b13_7": "爾已後鼓兩片皮如何為人。",
    "T47n1997_018:0798b14_8": "丈取拂子舉起。",
    "T47n1997_018:0798b14_9": "祖云。",
    "T47n1997_018:0798b15_0": "即此用離此用。",
    "T47n1997_018:0798b15_1": "丈掛拂子。",
    "T47n1997_018:0798b15_2": "祖便喝。",
    "T47n1997_018:0798b15_3": "丈大悟。",
    "T47n1997_018:0798b15_4": "後謂黃檗云。",
    "T47n1997_018:0798b16_5": "我當時被馬祖一喝。",
    "T47n1997_018:0798b16_6": "直得三日耳聾。",
    "T47n1997_018:0798b18_0": "竪拂掛拂全機出沒。",
    "T47n1997_018:0798b18_1": "即此離此較若畫一。",
    "T47n1997_018:0798b18_2": "頂門當下轟霹靂。",
    "T47n1997_018:0798b19_3": "鍼出膏肓必死疾。",
    "T47n1997_018:0798b19_4": "承當一喝聾三日。",
    "T47n1997_018:0798b20_5": "師子神威恣返擲。",
    "T47n1997_018:0798b20_6": "百煉真金須失色。",
    "T47n1997_018:0798b21_0": "復云。",
    "T47n1997_018:0798b21_1": "有麼有麼。",
    "T47n1997_018:0798b21_2": "咄。",
    "T47n1997_018:0798b22_0": "舉。",
    "T47n1997_018:0798b22_1": "道吾至一家弔慰。",
    "T47n1997_018:0798b22_2": "漸源撫棺問。",
    "T47n1997_018:0798b22_3": "生耶死耶。",
    "T47n1997_018:0798b23_0": "吾云。",
    "T47n1997_018:0798b23_1": "生也不道死也不道。",
    "T47n1997_018:0798b23_2": "源云。",
    "T47n1997_018:0798b23_3": "為什麼不道。",
    "T47n1997_018:0798b24_0": "吾云。",
    "T47n1997_018:0798b24_1": "不道不道。",
    "T47n1997_018:0798b24_2": "後於石霜再舉。",
    "T47n1997_018:0798b24_3": "始知落處。",
    "T47n1997_018:0798b24_4": "一日將鍬子於法堂上。",
    "T47n1997_018:0798b25_5": "從東過西從西過東。",
    "T47n1997_018:0798b25_6": "霜云。",
    "T47n1997_018:0798b26_7": "作什麼。",
    "T47n1997_018:0798b26_8": "源云。",
    "T47n1997_018:0798b26_9": "覓先師靈骨。",
    "T47n1997_018:0798b26_10": "霜云。",
    "T47n1997_018:0798b26_11": "洪波浩渺白浪滔天。",
    "T47n1997_018:0798b27_12": "覓什麼靈骨。",
    "T47n1997_018:0798b27_13": "源云。",
    "T47n1997_018:0798b27_14": "正好著力。",
    "T47n1997_018:0798b27_15": "太原孚云。",
    "T47n1997_018:0798b28_16": "先師靈骨猶在。",
    "T47n1997_018:0798b29_0": "生耶死耶築著磕著。",
    "T47n1997_018:0798b29_1": "不道不道藏頭露角。",
    "T47n1997_018:0798b29_2": "黃金靈骨鏗鏘。",
    "T47n1997_018:0798c01_3": "白浪滔天卓犖。",
    "T47n1997_018:0798c01_4": "殷勤為語透關人。",
    "T47n1997_018:0798c02_5": "萬里孤光長爍爍。",
    "T47n1997_018:0798c02_6": "無摸索趙州。",
    "T47n1997_018:0798c02_7": "石橋成略彴。",
    "T47n1997_018:0798c04_0": "舉。",
    "T47n1997_018:0798c04_1": "靈山會上有一女子。",
    "T47n1997_018:0798c04_2": "於佛前入定。",
    "T47n1997_018:0798c04_3": "佛勅文殊出之。",
    "T47n1997_018:0798c05_4": "文殊遶女子三遭。",
    "T47n1997_018:0798c05_5": "鳴指一下。",
    "T47n1997_018:0798c05_6": "女子入定儼然。",
    "T47n1997_018:0798c06_7": "文殊遂運神力托至梵天撲下。",
    "T47n1997_018:0798c06_8": "女子亦復儼然。",
    "T47n1997_018:0798c07_9": "佛云。",
    "T47n1997_018:0798c07_10": "非但汝一人出此女子定不得。",
    "T47n1997_018:0798c08_11": "設使百千萬億文殊亦出不得。",
    "T47n1997_018:0798c08_12": "下界有罔明菩薩。",
    "T47n1997_018:0798c09_13": "能出此定。",
    "T47n1997_018:0798c09_14": "佛語未竟。",
    "T47n1997_018:0798c09_15": "罔明從地涌出。",
    "T47n1997_018:0798c10_0": "佛勅令出定。",
    "T47n1997_018:0798c10_1": "罔明遶女子三匝。",
    "T47n1997_018:0798c10_2": "鳴指一下。",
    "T47n1997_018:0798c10_3": "女子遂出定。",
    "T47n1997_018:0798c11_4": "老宿徵云。",
    "T47n1997_018:0798c11_5": "文殊是七佛之師。",
    "T47n1997_018:0798c11_6": "為什麼出女子定不得。",
    "T47n1997_018:0798c12_7": "罔明為什麼却出得。",
    "T47n1997_018:0798c13_0": "大定等虛空。",
    "T47n1997_018:0798c13_1": "廓然誰辯的。",
    "T47n1997_018:0798c13_2": "女子與瞿曇。",
    "T47n1997_018:0798c13_3": "據令何條直。",
    "T47n1997_018:0798c14_4": "師子奮迅兮搖乾蕩坤。",
    "T47n1997_018:0798c14_5": "象王回旋兮不資餘力。",
    "T47n1997_018:0798c15_6": "孰勝孰負誰出誰入。",
    "T47n1997_018:0798c15_7": "雨散雲收青天白日。",
    "T47n1997_018:0798c16_8": "君不見馬駒踏殺天下人。",
    "T47n1997_018:0798c16_9": "臨濟未是白拈賊。",
    "T47n1997_018:0798c18_0": "舉。",
    "T47n1997_018:0798c18_1": "清原謂石頭云。",
    "T47n1997_018:0798c18_2": "人人盡道。",
    "T47n1997_018:0798c18_3": "曹溪有消息。",
    "T47n1997_018:0798c18_4": "頭云。",
    "T47n1997_018:0798c19_5": "有人不道曹溪有消息。",
    "T47n1997_018:0798c19_6": "原云。",
    "T47n1997_018:0798c19_7": "大藏小藏從何得。",
    "T47n1997_018:0798c20_8": "頭云。",
    "T47n1997_018:0798c20_9": "盡從這裏去。",
    "T47n1997_018:0798c21_0": "有消息太沈屈。",
    "T47n1997_018:0798c21_1": "無消息轉埋沒。",
    "T47n1997_018:0798c21_2": "大藏小藏從茲出。",
    "T47n1997_018:0798c22_3": "撒沙撒土無終極。",
    "T47n1997_018:0798c22_4": "甜如蜜苦如檗。",
    "T47n1997_018:0798c22_5": "明如日黑如漆。",
    "T47n1997_018:0798c23_6": "擊碎千年野狐窟。",
    "T47n1997_018:0798c23_7": "填溝塞壑少人識。",
    "T47n1997_018:0798c25_0": "舉。",
    "T47n1997_018:0798c25_1": "僧問雲門。",
    "T47n1997_018:0798c25_2": "佛法如水中月是不。",
    "T47n1997_018:0798c25_3": "門云。",
    "T47n1997_018:0798c25_4": "清波無透路。",
    "T47n1997_018:0798c26_5": "僧云。",
    "T47n1997_018:0798c26_6": "和尚從何得。",
    "T47n1997_018:0798c26_7": "門云。",
    "T47n1997_018:0798c26_8": "再問復何來。",
    "T47n1997_018:0798c27_9": "僧云。",
    "T47n1997_018:0798c27_10": "更恁麼去時如何。",
    "T47n1997_018:0798c27_11": "門云。",
    "T47n1997_018:0798c27_12": "重疊關山路。",
    "T47n1997_018:0798c29_0": "遍界不藏清波澄寂。",
    "T47n1997_018:0798c29_1": "互換投機箭鋒相直。",
    "T47n1997_018:0798c29_2": "提起向上鉗鎚。",
    "T47n1997_018:0799a01_3": "石火電光莫及。",
    "T47n1997_018:0799a01_4": "便恁麼隔關山。",
    "T47n1997_018:0799a02_0": "碧潭雲外不相關。",
    "T47n1997_018:0799a03_0": "舉。",
    "T47n1997_018:0799a03_1": "僧問龍牙。",
    "T47n1997_018:0799a03_2": "二鼠侵藤時如何。",
    "T47n1997_018:0799a03_3": "牙云。",
    "T47n1997_018:0799a03_4": "須知有隱身處始得。",
    "T47n1997_018:0799a04_5": "僧云。",
    "T47n1997_018:0799a04_6": "如何是隱身處。",
    "T47n1997_018:0799a04_7": "牙云。",
    "T47n1997_018:0799a04_8": "還見儂家麼。",
    "T47n1997_018:0799a06_0": "堂堂成見密密難見。",
    "T47n1997_018:0799a06_1": "二鼠雖黠莫逢其便。",
    "T47n1997_018:0799a06_2": "藤枝透出未生前。",
    "T47n1997_018:0799a07_3": "正眼當陽巧回換。",
    "T47n1997_018:0799a07_4": "龍牙老機如電。",
    "T47n1997_018:0799a08_5": "遇賤即貴貴即賤。",
    "T47n1997_018:0799a09_0": "舉。",
    "T47n1997_018:0799a09_1": "圓覺經云。",
    "T47n1997_018:0799a09_2": "以大圓覺為我伽藍。",
    "T47n1997_018:0799a09_3": "身心安居平等性智。",
    "T47n1997_018:0799a11_0": "毫髮不留縱橫自由。",
    "T47n1997_018:0799a11_1": "閫外乾坤廓落大方無外優游。",
    "T47n1997_018:0799a12_2": "明明祖師意。",
    "T47n1997_018:0799a12_3": "明明百草頭。",
    "T47n1997_018:0799a12_4": "搋破狐疑網。",
    "T47n1997_018:0799a13_5": "截斷愛河流。",
    "T47n1997_018:0799a13_6": "縱有回天力。",
    "T47n1997_018:0799a13_7": "爭如直下休。",
    "T47n1997_018:0799a13_8": "四衢道中淨裸裸。",
    "T47n1997_018:0799a14_9": "放出溈山水牯牛。",
    "T47n1997_018:0799a15_0": "舉。",
    "T47n1997_018:0799a15_1": "僧問雪峯。",
    "T47n1997_018:0799a15_2": "古澗寒泉時如何。",
    "T47n1997_018:0799a15_3": "峯云。",
    "T47n1997_018:0799a15_4": "瞪目不見底。",
    "T47n1997_018:0799a16_5": "僧云。",
    "T47n1997_018:0799a16_6": "飲者如何。",
    "T47n1997_018:0799a16_7": "峯云。",
    "T47n1997_018:0799a16_8": "不從口入。",
    "T47n1997_018:0799a16_9": "後有僧舉似趙州。",
    "T47n1997_018:0799a17_10": "州云。",
    "T47n1997_018:0799a17_11": "不可從鼻孔裏入去也。",
    "T47n1997_018:0799a17_12": "僧却問。",
    "T47n1997_018:0799a18_13": "古澗寒泉時如何。",
    "T47n1997_018:0799a18_14": "州云苦。",
    "T47n1997_018:0799a18_15": "僧云。",
    "T47n1997_018:0799a18_16": "飲者如何。",
    "T47n1997_018:0799a19_17": "州云死。",
    "T47n1997_018:0799a19_18": "雪峯聞之云。",
    "T47n1997_018:0799a19_19": "趙州古佛。",
    "T47n1997_018:0799a19_20": "從此不答話。",
    "T47n1997_018:0799a21_0": "趙州象骨巖。",
    "T47n1997_018:0799a21_1": "舉世無倫擬。",
    "T47n1997_018:0799a21_2": "共撫沒絃琴。",
    "T47n1997_018:0799a21_3": "千載清人耳。",
    "T47n1997_018:0799a22_4": "古澗寒泉瞪目凝然。",
    "T47n1997_018:0799a22_5": "不從口入飲者忘筌。",
    "T47n1997_018:0799a23_6": "重出語苦又死不答話同彼此。",
    "T47n1997_018:0799a23_7": "相逢兩會家。",
    "T47n1997_018:0799a24_8": "打鼓弄琵琶。",
    "T47n1997_018:0799a24_9": "箇中誰是的。",
    "T47n1997_018:0799a24_10": "白鳥入蘆華。",
    "T47n1997_018:0799a26_0": "舉。",
    "T47n1997_018:0799a26_1": "外道問佛。",
    "T47n1997_018:0799a26_2": "不問有言不問無言。",
    "T47n1997_018:0799a26_3": "世尊良久。",
    "T47n1997_018:0799a27_0": "外道云。",
    "T47n1997_018:0799a27_1": "世尊大慈大悲。",
    "T47n1997_018:0799a27_2": "開我迷雲令我得入。",
    "T47n1997_018:0799a28_0": "外道既去。",
    "T47n1997_018:0799a28_1": "阿難問世尊云。",
    "T47n1997_018:0799a28_2": "外道有何所證。",
    "T47n1997_018:0799a28_3": "世尊云如世良馬見鞭影而行。",
    "T47n1997_018:0799b01_0": "不問有無言。",
    "T47n1997_018:0799b01_1": "言前立問端。",
    "T47n1997_018:0799b01_2": "兩邊俱坐斷。",
    "T47n1997_018:0799b01_3": "一劍倚天寒。",
    "T47n1997_018:0799b02_4": "鞭影未動歷塊過都。",
    "T47n1997_018:0799b02_5": "慈門既開陵有轢無。",
    "T47n1997_018:0799b03_6": "遼天鼻孔須穿却。",
    "T47n1997_018:0799b03_7": "誰是追風天馬駒。",
    "T47n1997_018:0799b04_0": "舉。",
    "T47n1997_018:0799b04_1": "僧問六祖。",
    "T47n1997_018:0799b04_2": "黃梅意旨是什麼人得。",
    "T47n1997_018:0799b04_3": "祖云。",
    "T47n1997_018:0799b04_4": "會佛法人得。",
    "T47n1997_018:0799b05_5": "僧云。",
    "T47n1997_018:0799b05_6": "和尚還得也無。",
    "T47n1997_018:0799b05_7": "祖云。",
    "T47n1997_018:0799b05_8": "我不得。",
    "T47n1997_018:0799b06_9": "僧云。",
    "T47n1997_018:0799b06_10": "為什麼不得。",
    "T47n1997_018:0799b06_11": "祖云。",
    "T47n1997_018:0799b06_12": "我不會佛法。",
    "T47n1997_018:0799b07_0": "斬釘截鐵大巧若拙。",
    "T47n1997_018:0799b07_1": "一句單提不會佛法。",
    "T47n1997_018:0799b07_2": "儘他葉落華開。",
    "T47n1997_018:0799b08_3": "不問春寒秋熱。",
    "T47n1997_018:0799b08_4": "別別。",
    "T47n1997_018:0799b08_5": "萬古碧潭空界月。",
    "T47n1997_018:0799b10_0": "舉。",
    "T47n1997_018:0799b10_1": "太原孚上座問鼓山。",
    "T47n1997_018:0799b10_2": "父母未生時鼻孔在什麼處。",
    "T47n1997_018:0799b11_3": "山云。",
    "T47n1997_018:0799b11_4": "即今生也鼻孔在什麼處。",
    "T47n1997_018:0799b11_5": "孚不肯乃云。",
    "T47n1997_018:0799b12_6": "爾問我與爾答。",
    "T47n1997_018:0799b12_7": "山云。",
    "T47n1997_018:0799b12_8": "父母未生前鼻孔在什麼處。",
    "T47n1997_018:0799b13_9": "孚乃搖扇而已。",
    "T47n1997_018:0799b14_0": "父母未生前。",
    "T47n1997_018:0799b14_1": "生也只如然。",
    "T47n1997_018:0799b14_2": "一般拈掇能。",
    "T47n1997_018:0799b14_3": "奇巧直下渾。",
    "T47n1997_018:0799b15_4": "如火裏蓮騰今煥古。",
    "T47n1997_018:0799b15_5": "極妙窮玄大可憐。",
    "T47n1997_018:0799b16_6": "清風長滿座。",
    "T47n1997_018:0799b16_7": "一萬八千年。",
    "T47n1997_018:0799b17_0": "舉。",
    "T47n1997_018:0799b17_1": "乾峯示眾云。",
    "T47n1997_018:0799b17_2": "舉一不得舉二。",
    "T47n1997_018:0799b17_3": "放過一著落在第二。",
    "T47n1997_018:0799b18_4": "雲門出云。",
    "T47n1997_018:0799b18_5": "昨日有一僧。",
    "T47n1997_018:0799b18_6": "從天台來却往徑山去。",
    "T47n1997_018:0799b19_7": "峯云。",
    "T47n1997_018:0799b19_8": "典座今日不得普請。",
    "T47n1997_018:0799b20_0": "春蘭與秋菊。",
    "T47n1997_018:0799b20_1": "一一各當時。",
    "T47n1997_018:0799b20_2": "底處無回互。",
    "T47n1997_018:0799b20_3": "怨誰分髓皮。",
    "T47n1997_018:0799b21_4": "風來鳥已覺。",
    "T47n1997_018:0799b21_5": "露重鶴先知。",
    "T47n1997_018:0799b21_6": "為問何能爾。",
    "T47n1997_018:0799b22_7": "渠儂初不知。",
    "T47n1997_018:0799b23_0": "舉。",
    "T47n1997_018:0799b23_1": "雲巖問道吾。",
    "T47n1997_018:0799b23_2": "大悲菩薩用許多手眼作麼。",
    "T47n1997_018:0799b24_0": "吾云。",
    "T47n1997_018:0799b24_1": "如人夜間背手模枕子相似。",
    "T47n1997_018:0799b24_2": "巖云。",
    "T47n1997_018:0799b24_3": "我會也。",
    "T47n1997_018:0799b25_4": "吾云。",
    "T47n1997_018:0799b25_5": "爾作麼生會。",
    "T47n1997_018:0799b25_6": "巖云。",
    "T47n1997_018:0799b25_7": "遍身是手眼。",
    "T47n1997_018:0799b25_8": "吾云。",
    "T47n1997_018:0799b26_9": "太殺道只道得八成。",
    "T47n1997_018:0799b26_10": "巖云。",
    "T47n1997_018:0799b26_11": "爾又作麼生。",
    "T47n1997_018:0799b26_12": "吾云。",
    "T47n1997_018:0799b27_13": "通身是手眼。",
    "T47n1997_018:0799b28_0": "遍身是通身是。",
    "T47n1997_018:0799b28_1": "酥酪醍醐為一味。",
    "T47n1997_018:0799b28_2": "毫端涌出須彌盧。",
    "T47n1997_018:0799b29_3": "芥子吸竭滄溟水。",
    "T47n1997_018:0799b29_4": "十虛吞爍正眼寥廓。",
    "T47n1997_018:0799c01_5": "照用同時人境俱奪。",
    "T47n1997_018:0799c01_6": "棒頭喝下錯承當。",
    "T47n1997_018:0799c01_7": "背手拈來也失却。",
    "T47n1997_018:0799c02_8": "莫莫水是水兮山是山。",
    "T47n1997_018:0799c02_9": "切忌無繩而自縛。",
    "T47n1997_018:0799c04_0": "舉。",
    "T47n1997_018:0799c04_1": "洞山夏末示眾云。",
    "T47n1997_018:0799c04_2": "初秋夏末。",
    "T47n1997_018:0799c04_3": "直須向萬里無寸草處去。",
    "T47n1997_018:0799c05_4": "眾無語。",
    "T47n1997_018:0799c05_5": "僧舉似石霜。",
    "T47n1997_018:0799c05_6": "霜云。",
    "T47n1997_018:0799c05_7": "何不道出門便是草。",
    "T47n1997_018:0799c07_0": "新豐路坦然。",
    "T47n1997_018:0799c07_1": "豈事正偏圓。",
    "T47n1997_018:0799c07_2": "萬里無寸草。",
    "T47n1997_018:0799c07_3": "何人可向前。",
    "T47n1997_018:0799c08_4": "機不轉墮塵緣。",
    "T47n1997_018:0799c08_5": "透得脫犯風煙。",
    "T47n1997_018:0799c08_6": "瀏陽端的破中邊。",
    "T47n1997_018:0799c09_7": "出門已是草芊綿。",
    "T47n1997_018:0799c09_8": "投機儻善諳來脈。",
    "T47n1997_018:0799c10_9": "兩岸俱玄一不全。",
    "T47n1997_018:0799c10_10": "復云。",
    "T47n1997_018:0799c10_11": "看脚下。",
    "T47n1997_018:0799c11_0": "舉。",
    "T47n1997_018:0799c11_1": "定山夾山同行。",
    "T47n1997_018:0799c11_2": "定山云。",
    "T47n1997_018:0799c11_3": "生死中無佛則無生死。",
    "T47n1997_018:0799c12_4": "夾山云。",
    "T47n1997_018:0799c12_5": "生死中有佛則不迷生死。",
    "T47n1997_018:0799c12_6": "二人各謂己語親切。",
    "T47n1997_018:0799c13_7": "往大梅舉而質之。",
    "T47n1997_018:0799c13_8": "梅云。",
    "T47n1997_018:0799c13_9": "一親一疎。",
    "T47n1997_018:0799c14_10": "二人下去。",
    "T47n1997_018:0799c14_11": "次日夾山往問。",
    "T47n1997_018:0799c14_12": "阿那箇親。",
    "T47n1997_018:0799c14_13": "梅云。",
    "T47n1997_018:0799c15_14": "親者不問。",
    "T47n1997_018:0799c15_15": "問者不親。",
    "T47n1997_018:0799c15_16": "夾山住院後舉此謂眾云。",
    "T47n1997_018:0799c16_17": "我當時失却一隻眼。",
    "T47n1997_018:0799c16_18": "雪竇拈云。",
    "T47n1997_018:0799c16_19": "夾山畢竟不知當時換得一隻眼。",
    "T47n1997_018:0799c18_0": "有佛不迷無佛則迷。",
    "T47n1997_018:0799c18_1": "大梅頂門正眼劃時已驗親疎。",
    "T47n1997_018:0799c19_2": "家抱荊山璞。",
    "T47n1997_018:0799c19_3": "人握靈蛇珠。",
    "T47n1997_018:0799c19_4": "失却與換得。",
    "T47n1997_018:0799c20_5": "同歸故殊途。",
    "T47n1997_018:0799c20_6": "作家金槌當面擲。",
    "T47n1997_018:0799c20_7": "臨機俊鷂趁不及。",
    "T47n1997_018:0799c21_8": "將謂赤鬚胡。",
    "T47n1997_018:0799c21_9": "更有胡鬚赤。",
    "T47n1997_018:0799c22_0": "舉。",
    "T47n1997_018:0799c22_1": "趙州云。",
    "T47n1997_018:0799c22_2": "老僧答話去也。",
    "T47n1997_018:0799c22_3": "有解問底致將一問來。",
    "T47n1997_018:0799c23_4": "時有僧出禮拜。",
    "T47n1997_018:0799c23_5": "州云。",
    "T47n1997_018:0799c23_6": "比來拋塼引玉。",
    "T47n1997_018:0799c23_7": "却引得箇墼子。",
    "T47n1997_018:0799c24_8": "下座。",
    "T47n1997_018:0799c24_9": "後法眼舉問覺鐵觜。",
    "T47n1997_018:0799c24_10": "此意如何。",
    "T47n1997_018:0799c25_11": "覺云。",
    "T47n1997_018:0799c25_12": "與和尚舉箇喻。",
    "T47n1997_018:0799c25_13": "如國家拜將相似。",
    "T47n1997_018:0799c26_0": "問誰人去得。",
    "T47n1997_018:0799c26_1": "有一人云。",
    "T47n1997_018:0799c26_2": "某去得。",
    "T47n1997_018:0799c26_3": "答云。",
    "T47n1997_018:0799c26_4": "汝去不得。",
    "T47n1997_018:0799c27_5": "法眼云。",
    "T47n1997_018:0799c27_6": "我會也。",
    "T47n1997_018:0799c28_0": "千年田八百主。",
    "T47n1997_018:0799c28_1": "誰當機辨來處。",
    "T47n1997_018:0799c28_2": "趙州要答話。",
    "T47n1997_018:0799c29_0": "拋塼引墼子。",
    "T47n1997_018:0799c29_1": "覺老話端倪。",
    "T47n1997_018:0799c29_2": "如拜將相似。",
    "T47n1997_018:0799c29_3": "去得去不得。",
    "T47n1997_018:0800a01_4": "言下分緇素。",
    "T47n1997_018:0800a01_5": "箇裏高於萬仞峯。",
    "T47n1997_018:0800a01_6": "不動纖毫擒佛祖。",
    "T47n1997_018:0800a02_7": "崇寧効古所作答話去也。",
    "T47n1997_018:0800a02_8": "或有箇出來。",
    "T47n1997_018:0800a03_9": "只向伊道了。",
    "T47n1997_018:0800a04_0": "舉。",
    "T47n1997_018:0800a04_1": "馬祖百丈西堂南泉翫月次。",
    "T47n1997_018:0800a04_2": "祖指月問西堂。",
    "T47n1997_018:0800a05_3": "正當恁麼時如何。",
    "T47n1997_018:0800a05_4": "西堂對云。",
    "T47n1997_018:0800a05_5": "正好供養。",
    "T47n1997_018:0800a05_6": "問百丈。",
    "T47n1997_018:0800a06_7": "丈對云。",
    "T47n1997_018:0800a06_8": "正好修行。",
    "T47n1997_018:0800a06_9": "問南泉。",
    "T47n1997_018:0800a06_10": "泉拂袖便去。",
    "T47n1997_018:0800a07_11": "祖云。",
    "T47n1997_018:0800a07_12": "經入藏禪歸海。",
    "T47n1997_018:0800a07_13": "唯有普願獨超物外。",
    "T47n1997_018:0800a08_0": "皎皎凝虛碧。",
    "T47n1997_018:0800a08_1": "沈沈發皓彩。",
    "T47n1997_018:0800a08_2": "秋色共澄清。",
    "T47n1997_018:0800a08_3": "永夜臨寰海。",
    "T47n1997_018:0800a09_4": "修行供養逗圓機。",
    "T47n1997_018:0800a09_5": "聊聞便去超方外。",
    "T47n1997_018:0800a10_0": "馬駒兒端的別。",
    "T47n1997_018:0800a10_1": "萬古定乾坤。",
    "T47n1997_018:0800a10_2": "一言全殺活。",
    "T47n1997_018:0800a10_3": "復云。",
    "T47n1997_018:0800a11_4": "高著眼。",
    "T47n1997_018:0800a12_0": "舉。",
    "T47n1997_018:0800a12_1": "金牛行食次。",
    "T47n1997_018:0800a12_2": "問龐居士云。",
    "T47n1997_018:0800a12_3": "生心受食淨名所呵。",
    "T47n1997_018:0800a13_4": "去此二途。",
    "T47n1997_018:0800a13_5": "居士還甘否。",
    "T47n1997_018:0800a13_6": "士云。",
    "T47n1997_018:0800a13_7": "當時善現豈不作家。",
    "T47n1997_018:0800a14_8": "牛云。",
    "T47n1997_018:0800a14_9": "豈干他事。",
    "T47n1997_018:0800a14_10": "士云。",
    "T47n1997_018:0800a14_11": "食到口邊被人奪却。",
    "T47n1997_018:0800a15_12": "牛便行食。",
    "T47n1997_018:0800a15_13": "士云不消一句子。",
    "T47n1997_018:0800a16_0": "淨名呵善現。",
    "T47n1997_018:0800a16_1": "金牛勘龐老。",
    "T47n1997_018:0800a16_2": "彼此不相饒。",
    "T47n1997_018:0800a16_3": "峻機無處討。",
    "T47n1997_018:0800a17_4": "雲行雨施雷奔電掃。",
    "T47n1997_018:0800a17_5": "殺虎陷虎出草入草。",
    "T47n1997_018:0800a18_6": "毘婆尸佛早留心。",
    "T47n1997_018:0800a18_7": "直至如今不得妙。",
    "T47n1997_018:0800a19_0": "舉。",
    "T47n1997_018:0800a19_1": "師祖問南泉。",
    "T47n1997_018:0800a19_2": "摩尼珠人不識。",
    "T47n1997_018:0800a19_3": "如來藏裏親收得。",
    "T47n1997_018:0800a20_4": "如何是藏。",
    "T47n1997_018:0800a20_5": "泉云。",
    "T47n1997_018:0800a20_6": "王老師與爾往來者是藏。",
    "T47n1997_018:0800a21_7": "雪竇云。",
    "T47n1997_018:0800a21_8": "草裏漢。",
    "T47n1997_018:0800a21_9": "祖云。",
    "T47n1997_018:0800a21_10": "直得不往來時如何。",
    "T47n1997_018:0800a22_11": "泉云。",
    "T47n1997_018:0800a22_12": "亦是藏。",
    "T47n1997_018:0800a22_13": "雪竇云。",
    "T47n1997_018:0800a22_14": "雪上更加霜。",
    "T47n1997_018:0800a22_15": "祖云。",
    "T47n1997_018:0800a23_0": "如何是珠。",
    "T47n1997_018:0800a23_1": "泉云師祖。",
    "T47n1997_018:0800a23_2": "祖云諾。",
    "T47n1997_018:0800a23_3": "雪竇云。",
    "T47n1997_018:0800a23_4": "百尺竿頭作伎倆未是嶮。",
    "T47n1997_018:0800a24_5": "若向箇裏著得一隻眼。",
    "T47n1997_018:0800a25_0": "賓主互換。",
    "T47n1997_018:0800a25_1": "便能深入虎穴。",
    "T47n1997_018:0800a25_2": "或不恁麼。",
    "T47n1997_018:0800a25_3": "直饒師祖悟去。",
    "T47n1997_018:0800a26_4": "也是龍頭蛇尾漢。",
    "T47n1997_018:0800a27_0": "蒼鷹逐兔驪龍翫珠。",
    "T47n1997_018:0800a27_1": "透青眼不瞬。",
    "T47n1997_018:0800a27_2": "照物手寧虛。",
    "T47n1997_018:0800a28_3": "往來不往來。",
    "T47n1997_018:0800a28_4": "草裏謾塗糊。",
    "T47n1997_018:0800a28_5": "百尺竿頭入虎穴。",
    "T47n1997_018:0800a29_6": "分明月上長珊瑚。",
    "T47n1997_018:0800b01_0": "舉。",
    "T47n1997_018:0800b01_1": "僧問藥山。",
    "T47n1997_018:0800b01_2": "如何是道中至寶。",
    "T47n1997_018:0800b01_3": "山云。",
    "T47n1997_018:0800b01_4": "諂曲。",
    "T47n1997_018:0800b02_0": "僧云。",
    "T47n1997_018:0800b02_1": "不諂曲時如何。",
    "T47n1997_018:0800b02_2": "山云。",
    "T47n1997_018:0800b02_3": "傾國莫換。",
    "T47n1997_018:0800b03_0": "道中有至寶。",
    "T47n1997_018:0800b03_1": "濟世無倫匹。",
    "T47n1997_018:0800b03_2": "藥嶠發深藏。",
    "T47n1997_018:0800b03_3": "唯云。",
    "T47n1997_018:0800b04_0": "莫諂曲不諂曲。",
    "T47n1997_018:0800b04_1": "傾國相酬未相直。",
    "T47n1997_018:0800b04_2": "壁立萬仞此心真。",
    "T47n1997_018:0800b05_3": "不必當來問彌勒。",
    "T47n1997_018:0800b06_0": "舉。",
    "T47n1997_018:0800b06_1": "僧問雲門。",
    "T47n1997_018:0800b06_2": "學人不起一念。",
    "T47n1997_018:0800b06_3": "還有過也無。",
    "T47n1997_018:0800b06_4": "門云。",
    "T47n1997_018:0800b07_5": "須彌山。",
    "T47n1997_018:0800b08_0": "石筍抽條泥牛吼月。",
    "T47n1997_018:0800b08_1": "誰料同舟自胡越。",
    "T47n1997_018:0800b08_2": "應機涌出須彌山。",
    "T47n1997_018:0800b09_3": "一念不生何處雪。",
    "T47n1997_018:0800b09_4": "金剛寶劍當頭截。",
    "T47n1997_018:0800b11_0": "舉。",
    "T47n1997_018:0800b11_1": "僧問投子。",
    "T47n1997_018:0800b11_2": "一大藏教還有奇特事也無。",
    "T47n1997_018:0800b11_3": "子云。",
    "T47n1997_018:0800b12_4": "演出一大藏。",
    "T47n1997_018:0800b13_0": "頓漸偏圓權實空有。",
    "T47n1997_018:0800b13_1": "釘觜鐵舌河目海口。",
    "T47n1997_018:0800b13_2": "一道清虛亘古今。",
    "T47n1997_018:0800b14_3": "八角磨盤空裏走。",
    "T47n1997_018:0800b15_0": "舉。",
    "T47n1997_018:0800b15_1": "智門問五祖戒和尚。",
    "T47n1997_018:0800b15_2": "暑往寒來則不問。",
    "T47n1997_018:0800b16_0": "林下相逢事若何。",
    "T47n1997_018:0800b16_1": "戒云。",
    "T47n1997_018:0800b16_2": "五鳳樓前聽玉漏。",
    "T47n1997_018:0800b16_3": "門云。",
    "T47n1997_018:0800b17_4": "爭奈主山高案山低。",
    "T47n1997_018:0800b17_5": "戒云。",
    "T47n1997_018:0800b17_6": "須彌頂上擊金鐘。",
    "T47n1997_018:0800b19_0": "高高峯頂翻銀浪。",
    "T47n1997_018:0800b19_1": "深深海底起紅塵。",
    "T47n1997_018:0800b19_2": "金鐘玉漏相酬酢。",
    "T47n1997_018:0800b20_3": "疑殺滔滔天下人。",
    "T47n1997_018:0800b20_4": "苟非作者孰問關津。",
    "T47n1997_018:0800b21_5": "執鞭回首四海良隣。",
    "T47n1997_018:0800b21_6": "君不見仲尼溫伯雪。",
    "T47n1997_018:0800b22_7": "傾蓋相逢也奇絕。",
    "T47n1997_018:0800b23_0": "舉。",
    "T47n1997_018:0800b23_1": "本仁示眾云。",
    "T47n1997_018:0800b23_2": "尋常不欲向聲前句後鼓弄人家男女。",
    "T47n1997_018:0800b24_3": "何故。",
    "T47n1997_018:0800b24_4": "且聲不是聲。",
    "T47n1997_018:0800b24_5": "色不是色。",
    "T47n1997_018:0800b24_6": "僧問。",
    "T47n1997_018:0800b25_7": "如何是聲不是聲。",
    "T47n1997_018:0800b25_8": "仁云。",
    "T47n1997_018:0800b25_9": "喚作色得麼。",
    "T47n1997_018:0800b25_10": "僧云。",
    "T47n1997_018:0800b26_11": "如何是色不是色。",
    "T47n1997_018:0800b26_12": "仁云。",
    "T47n1997_018:0800b26_13": "喚作聲得麼。",
    "T47n1997_018:0800b26_14": "僧無語。",
    "T47n1997_018:0800b27_15": "仁云。",
    "T47n1997_018:0800b27_16": "且道。",
    "T47n1997_018:0800b27_17": "為汝說答汝話。",
    "T47n1997_018:0800b27_18": "若人辨得。",
    "T47n1997_018:0800b27_19": "許爾有箇入處。",
    "T47n1997_018:0800b29_0": "聲出虛色生無。",
    "T47n1997_018:0800b29_1": "聲前句後轉塗糊。",
    "T47n1997_018:0800b29_2": "間不容髮安可名模。",
    "T47n1997_018:0800c01_3": "堂堂圓應沒錙銖。",
    "T47n1997_018:0800c01_4": "巧張爐鞴費分疎。",
    "T47n1997_018:0800c02_5": "爭如棒下無生忍。",
    "T47n1997_018:0800c02_6": "聞見馨香滿道塗。",
    "T47n1997_018:0800c03_0": "舉。",
    "T47n1997_018:0800c03_1": "雲門問僧云古佛與露柱相交。",
    "T47n1997_018:0800c03_2": "是第幾機。",
    "T47n1997_018:0800c04_0": "僧無語。",
    "T47n1997_018:0800c04_1": "門云。",
    "T47n1997_018:0800c04_2": "爾問我與爾道。",
    "T47n1997_018:0800c04_3": "僧遂問。",
    "T47n1997_018:0800c04_4": "門云。",
    "T47n1997_018:0800c05_0": "一條縚三十文。",
    "T47n1997_018:0800c05_1": "僧云。",
    "T47n1997_018:0800c05_2": "如何是一條縚三十文。",
    "T47n1997_018:0800c06_0": "門云。",
    "T47n1997_018:0800c06_1": "打與。",
    "T47n1997_018:0800c06_2": "代前語云。",
    "T47n1997_018:0800c06_3": "南山起雲北山下雨。",
    "T47n1997_018:0800c07_0": "油然南山雲。",
    "T47n1997_018:0800c07_1": "霈然北山雨。",
    "T47n1997_018:0800c07_2": "露柱笑呵呵。",
    "T47n1997_018:0800c07_3": "燈籠超佛祖。",
    "T47n1997_018:0800c08_4": "中涌邊沒西天東土。",
    "T47n1997_018:0800c08_5": "樓閣門開竟日閑。",
    "T47n1997_018:0800c09_6": "野老不知何處去。",
    "T47n1997_018:0800c10_0": "圓悟佛果禪師語錄卷第十八"
}