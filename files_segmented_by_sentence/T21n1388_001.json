[
    {
        "source_sentence": "佛說無畏陀羅尼經",
        "from": "T21n1388_001:0906c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "西天譯經三藏朝散大夫試光祿卿",
        "from": "T21n1388_001:0906c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "明教大師臣法賢奉　詔譯",
        "from": "T21n1388_001:0906c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時佛告諸苾芻。",
        "from": "T21n1388_001:0906c07_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "汝等諦聽我今宣說無畏陀羅尼。",
        "from": "T21n1388_001:0906c08_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是陀羅尼能與眾生息除諸難。",
        "from": "T21n1388_001:0906c08_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "苾芻若人得聞及受持者。",
        "from": "T21n1388_001:0906c09_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人所獲功德無量無邊。",
        "from": "T21n1388_001:0906c10_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即說陀羅尼曰。",
        "from": "T21n1388_001:0906c10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵引那莫阿引哩也二合引嚩路吉帝引說囉引野一句󰂛地薩埵引野二摩賀引薩埵引野三摩賀引迦引嚕尼迦引野四怛𭔞切身下同他引唵引目訖帝二合引五蘇目訖帝二合引六砌引那儞七尾砌引那儞八儞哩摩二合梨引九莽誐梨引十蘇莽誐梨引十一蘇目契引十二尾目契引十三薩哩嚩二合跋野尾謨引叉尼引十四薩哩嚩二合跋踰引鉢捺囉二合吠引毘藥二合尾謨引叉尼引十五囉惹跋煬十六陬囉跋煬十七摩囉拏跋煬十八阿必哩二合野跋煬十九設薩怛囉三合跋煬二十阿屹儞二合跋煬二十一烏那哥跋煬二十二尾沙跋煬二十三波囉作訖囉二合跋煬二十四賽𭔞跋煬二十五設咄嚕二合跋煬二十六阿設儞跋煬二十七賽那末𬽓誐都引嚩引二十八陬囉末𬽓誐都引嚩引二十九星賀末𬽓誐都引嚩引三十咩引竭囉二合末𬽓誐都引嚩引三十一藥叉末𬽓誐都引嚩引三十二捺微二合波末𬽓誐都引嚩引三十三贊拏末𬽓誐都引嚩引三十四訖哩二合瑟拏二合薩哩波二合末𬽓誐都引嚩引三十五阿惹哥囉末𬽓誐都引嚩引三十六喝悉底二合末𬽓誐都引嚩引三十七三母捺囉二合末𬽓誐都引嚩引三十八哥引羅播引設末𬽓誐都引嚩引三十九儞誐拏滿馱都引嚩引四十哥引瑟吒二合滿馱都引嚩四十一拶哩摩二合滿馱都引嚩引四十二尾沙訖囉二合蜜都引嚩引四十三訥哩僻二合叉都引嚩引四十四儞誐拏滿馱都引嚩引四十五波囉設娑怛囉三合都引嚩引四十六薩哩嚩二合引𭔞乃嚩跋曳數四十七薩哩巫二合引鉢捺囉二合微引數沒節帝引四十八薩哩嚩二合跋野沒節帝引四十九𡁆叉𡁆叉摩摩薩哩嚩二合薩埵喃引五十阿引喻囉引嚕引倪五十一室哩二合煬嚩哩馱二合底五十二阿引哩也二合引嚩路引吉帝引說囉寫五十三渴帝引尾喝帝引五十四喝麗引尾喝麗引五十五薩哩微二合引鉢囉二合引爹哩體二合哥引謨引左儞五十六謨引叉尼五十七尾引哩也二合尼唵那莫莎引賀引五十八爾時世尊說是陀羅尼已。",
        "from": "T21n1388_001:0907a17_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復告諸苾芻言。",
        "from": "T21n1388_001:0907a17_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若善男子善女人。",
        "from": "T21n1388_001:0907a18_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聞此陀羅尼發志誠心。",
        "from": "T21n1388_001:0907a18_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "恭信供養讀誦受持。",
        "from": "T21n1388_001:0907a19_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若自手書若使人書。",
        "from": "T21n1388_001:0907a19_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及為他說廣宣流布。",
        "from": "T21n1388_001:0907a20_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "是人不為王難水火難。",
        "from": "T21n1388_001:0907a20_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "刀兵難冤賊難之所傷害。",
        "from": "T21n1388_001:0907a21_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復不為夜叉難禁縛難。",
        "from": "T21n1388_001:0907a21_18",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雷雹難閃電難。",
        "from": "T21n1388_001:0907a22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大海漂沒難蟒蛇毒螫難。",
        "from": "T21n1388_001:0907a22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "師子狂象難猛虎惡獸難飢饉疾疫難。",
        "from": "T21n1388_001:0907a23_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是諸難皆不為害乃至怖畏悉皆解脫。",
        "from": "T21n1388_001:0907a24_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "爾時諸苾芻眾聞佛所說。",
        "from": "T21n1388_001:0907a25_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "歡喜信受作禮而退。",
        "from": "T21n1388_001:0907a26_1",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "佛說無畏陀羅尼經",
        "from": "T21n1388_001:0907a27_100",
        "context_with_next_sentence": false
    }
]