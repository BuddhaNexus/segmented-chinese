[
    {
        "source_sentence": "都表如意摩尼轉輪聖王次第念",
        "from": "T20n1089_001:0217b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦祕密最要略法",
        "from": "T20n1089_001:0217b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "解脫師子譯",
        "from": "T20n1089_001:0217b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今當說思惟法　　三種真言而次第",
        "from": "T20n1089_001:0217b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初用大心外加持　　第二根本復想內",
        "from": "T20n1089_001:0217b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三小心內外通　　應可存心無錯亂",
        "from": "T20n1089_001:0217b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如是三道妙真言　　安立行者明王地",
        "from": "T20n1089_001:0217b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有修此三昧耶　　須具七種殊勝相",
        "from": "T20n1089_001:0217b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "猶如輪王持七寶　　王四天下皆降伏",
        "from": "T20n1089_001:0217b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次說順諸念誦法　　復擇清淨吉祥地",
        "from": "T20n1089_001:0217b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或在山間及池邊　　或在伽藍精室處",
        "from": "T20n1089_001:0217b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或佛舍利神塔中　　應可存心辦諸俱",
        "from": "T20n1089_001:0217b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先以持地如教命　　復次安置本尊者",
        "from": "T20n1089_001:0217b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者自須敷已座　　尊面西方在目前",
        "from": "T20n1089_001:0217b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者像前面東坐　　清淨沐浴香塗身",
        "from": "T20n1089_001:0217b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兼著新淨妙衣服　　又持種種供養具",
        "from": "T20n1089_001:0217b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "步步想八葉蓮華　　存想變地無濁穢",
        "from": "T20n1089_001:0217b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "加持護身入精室　　安置像前而念誦",
        "from": "T20n1089_001:0217b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "先用大心真言王　　澡浴洗淨結護法",
        "from": "T20n1089_001:0217b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪水灑身加持衣　　復須想念皆成就",
        "from": "T20n1089_001:0217b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "如此五種隨次第　　都用大明及本印",
        "from": "T20n1089_001:0217c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵波怛摩進跢末尼摩賀惹嚩引囉吽澡豆沐浴之具。",
        "from": "T20n1089_001:0217c03_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各呪七遍。",
        "from": "T20n1089_001:0217c03_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後澡洗。",
        "from": "T20n1089_001:0217c03_16",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想水白色　　猶如甘露　　又想自身",
        "from": "T20n1089_001:0217c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "垢穢煩惱　　受此水已　　一切塵勞",
        "from": "T20n1089_001:0217c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "皆悉落盡　　洗浴畢已　　應須洗淨",
        "from": "T20n1089_001:0217c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "取土少許　　加持七遍　　隨時洗淨",
        "from": "T20n1089_001:0217c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後著衣時其衣亦復加持七遍作如此想。",
        "from": "T20n1089_001:0217c09_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今此身　　被金剛甲　　依法訖已",
        "from": "T20n1089_001:0217c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即須灑身　　用水一掬　　加持七遍",
        "from": "T20n1089_001:0217c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "散灑其身　　想虛空中　　雨諸寶華",
        "from": "T20n1089_001:0217c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "遍滿世界　　便須護身　　結此密印",
        "from": "T20n1089_001:0217c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦持七遍　　印於七處　　心及兩肩",
        "from": "T20n1089_001:0217c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "兩眼兩膝　　散於頭上",
        "from": "T20n1089_001:0217c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦成大護身已。",
        "from": "T20n1089_001:0217c16_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即須結界。",
        "from": "T20n1089_001:0217c16_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若結壇界　　開於四門　　不應結界",
        "from": "T20n1089_001:0217c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作結護　　皆須用心",
        "from": "T20n1089_001:0217c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦鋪置次第即作啟請等事。",
        "from": "T20n1089_001:0217c19_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說根本軌儀法　　想念奉請大聖王",
        "from": "T20n1089_001:0217c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "誦此密言及結印　　一一自想往彼山",
        "from": "T20n1089_001:0217c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存心頂禮而奉請　　迎引尊者入道場",
        "from": "T20n1089_001:0217c23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復用遏伽而授與　　香華飲食及塗香",
        "from": "T20n1089_001:0217c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燈蓋幢幡兼藥等　　如法供養彼明王",
        "from": "T20n1089_001:0217c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "想念供養尊者已　　隨便持珠誦密言",
        "from": "T20n1089_001:0217c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "悔先世過及發願　　至誠端坐觀明王",
        "from": "T20n1089_001:0217c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者像前端坐思惟。",
        "from": "T20n1089_001:0217c28_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "存心諦觀布多勒伽山眾寶莊嚴華果茂盛。",
        "from": "T20n1089_001:0217c29_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其山頂上　　聖者宮殿　　本在其中",
        "from": "T20n1089_001:0218a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "應想聖者　　安坐殿中　　殊妙供具",
        "from": "T20n1089_001:0218a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莊嚴其身　　行者於此　　心想之中",
        "from": "T20n1089_001:0218a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "自往彼山　　迎誦尊者　　引入道場",
        "from": "T20n1089_001:0218a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於壇中心　　蓮華臺上　　安置聖者",
        "from": "T20n1089_001:0218a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次奉遏伽水。",
        "from": "T20n1089_001:0218a06_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於新銅器　　或用白瓷　　器盛香水",
        "from": "T20n1089_001:0218a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉於聖者　　便誦真言　　復想此水",
        "from": "T20n1089_001:0218a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者受已　　遍灑四方　　及灑妙身",
        "from": "T20n1089_001:0218a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者細觀尊灑水已。",
        "from": "T20n1089_001:0218a10_8",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三千大千世界猶如瑠璃內外明徹中無一物。",
        "from": "T20n1089_001:0218a11_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉遏伽已　　次復供養　　香華飲食",
        "from": "T20n1089_001:0218a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "塗香末香　　燈蓋之事　　一一加持",
        "from": "T20n1089_001:0218a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "真言及印供養畢已。",
        "from": "T20n1089_001:0218a15_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於本尊聖者前悔謝其身呵責己過。",
        "from": "T20n1089_001:0218a16_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "次復發願　　隨心所求　　悉皆陳說",
        "from": "T20n1089_001:0218a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其想中　　結壇三門　　唯留西門",
        "from": "T20n1089_001:0218a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復結大界　　身外四方　　周匝鋪置",
        "from": "T20n1089_001:0218a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及虛空界　　次用塗香　　塗手臂上",
        "from": "T20n1089_001:0218a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後念誦執念珠以珠熏香。",
        "from": "T20n1089_001:0218a22_7",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二手合掌再三頂戴作如是言。",
        "from": "T20n1089_001:0218a23_2",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我念存心　　承事聖者　　持此密言",
        "from": "T20n1089_001:0218a24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唯願尊者　　不捨大悲　　莫違本誓",
        "from": "T20n1089_001:0218a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發弘誓願　　速現一切　　妙莊嚴身",
        "from": "T20n1089_001:0218a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若見已　　現身即得　　證法雲地",
        "from": "T20n1089_001:0218a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "常侍尊者　　不離左右　　發此願已",
        "from": "T20n1089_001:0218a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便誦根本　　祕密真言曰",
        "from": "T20n1089_001:0218a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曩上謨引阿去引囉怛曩上二合怛囉二合夜長引野一曩上莫阿去哩野二合引嚩路枳帝三濕嚩二合囉野四冒地薩怛嚩二合引野五摩賀薩怛嚩二合引野六摩賀迦去嚕抳去迦去野七怛儞野二合他去八唵九左訖囉二合嚩底十進跢末抳去十一摩訶跛納冥二合十二嚕嚕底瑟吒二合十三入嚩二合囉十四阿訖羅灑二合野十五吽引泮吒十六娑嚩二合引賀引誦此真言。",
        "from": "T20n1089_001:0218b09_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於七日中滿三十萬遍。",
        "from": "T20n1089_001:0218b09_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者即現持誦人前。",
        "from": "T20n1089_001:0218b10_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心所求皆得成就。",
        "from": "T20n1089_001:0218b10_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若常持念　　每日三時　　時別念誦",
        "from": "T20n1089_001:0218b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一千八遍　　或百八遍　　如是數滿",
        "from": "T20n1089_001:0218b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三十萬遍　　即成悉地　　時別皆作",
        "from": "T20n1089_001:0218b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "迎送之事　　付囑等法",
        "from": "T20n1089_001:0218b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "大心密言曰。",
        "from": "T20n1089_001:0218b15_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復說最勝小心王　　能成一切諸悉地",
        "from": "T20n1089_001:0218b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三業齊用結妙印　　誦祕真言而付囑",
        "from": "T20n1089_001:0218b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又於想中除結界　　次奉遏伽灑四方",
        "from": "T20n1089_001:0218b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "後責已過深慚愧　　引大聖者還本宮",
        "from": "T20n1089_001:0218b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置尊者彼殿已　　辭別自念還本方",
        "from": "T20n1089_001:0218b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復行者　　每持誦已　　須作付囑",
        "from": "T20n1089_001:0218b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "結此密印　　及誦真言　　付囑聖者",
        "from": "T20n1089_001:0218b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作如是語　　所有遍數　　及持功夫",
        "from": "T20n1089_001:0218b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "付囑尊者　　唯願尊者　　受取守護",
        "from": "T20n1089_001:0218b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "莫令散失　　又想手印　　猶如寶藏",
        "from": "T20n1089_001:0218b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切遍數　　安在藏中　　授與聖者",
        "from": "T20n1089_001:0218b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者受已　　置蓮華中　　作付囑畢",
        "from": "T20n1089_001:0218c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦須悔過　　發弘誓願　　然後復作",
        "from": "T20n1089_001:0218c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "聖者還宮　　引送之法　　即除結界",
        "from": "T20n1089_001:0218c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復取香水　　散灑四方　　及奉聖者",
        "from": "T20n1089_001:0218c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "便當引送　　復結密印　　及誦真言",
        "from": "T20n1089_001:0218c05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想自身　　還送聖者　　至於本宮",
        "from": "T20n1089_001:0218c06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "安置殿中　　聖者坐已　　自須辭去",
        "from": "T20n1089_001:0218c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "却還本方小心密言曰。",
        "from": "T20n1089_001:0218c09_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "唵嚩引囉娜跛納冥二合吽引此中密印相貌我今說之。",
        "from": "T20n1089_001:0218c10_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初作大印用種種塗香塗於手臂。",
        "from": "T20n1089_001:0218c11_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "然後結印頂戴當心合掌。",
        "from": "T20n1089_001:0218c11_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指及無名指。",
        "from": "T20n1089_001:0218c12_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "鉤在掌中。",
        "from": "T20n1089_001:0218c12_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其二頭指押中指背第二節上。",
        "from": "T20n1089_001:0218c13_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二大指並竪。",
        "from": "T20n1089_001:0218c13_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此是大心　　真言密印　　要須共用",
        "from": "T20n1089_001:0218c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所作加持　　其祕密言　　各誦七遍",
        "from": "T20n1089_001:0218c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "各印印之　　或擲或止　　要當想成",
        "from": "T20n1089_001:0218c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一一如法　　不得就中　　心緣餘境",
        "from": "T20n1089_001:0218c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨順世法　　行住坐臥　　安在諸佛",
        "from": "T20n1089_001:0218c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深境界　　若有行者　　修此法者",
        "from": "T20n1089_001:0218c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "不久即成　　一切種智",
        "from": "T20n1089_001:0218c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二根本真言印第二根本真言印以二手腕相著。",
        "from": "T20n1089_001:0218c22_6",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "當在胸前。",
        "from": "T20n1089_001:0218c22_11",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其十指並散。",
        "from": "T20n1089_001:0218c22_17",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "二小指及二大指並竪猶如蓮花形。",
        "from": "T20n1089_001:0218c23_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "亦依前法印之止之。",
        "from": "T20n1089_001:0218c24_3",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惟有迎請母指來去。",
        "from": "T20n1089_001:0218c24_12",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三小心真言印第三小心真言印以二手虛心合掌猶如未開蓮花。",
        "from": "T20n1089_001:0218c26_13",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若付囑時依前想念。",
        "from": "T20n1089_001:0218c27_5",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "發遣尊者開二大指。",
        "from": "T20n1089_001:0218c27_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此小心密印通蓮花部一切處用。",
        "from": "T20n1089_001:0218c28_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今於大蓮花部三昧耶中略出此祕密甚深念誦次第。",
        "from": "T20n1089_001:0218c29_14",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其修行者不得錯傳如護眼目。",
        "from": "T20n1089_001:0219a01_10",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能如是。",
        "from": "T20n1089_001:0219a01_15",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切聖者皆大歡喜憶念此人。",
        "from": "T20n1089_001:0219a02_9",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切善神日夜常護不離左右。",
        "from": "T20n1089_001:0219a03_4",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今順於蓮花部　　略說如意摩尼輪",
        "from": "T20n1089_001:0219a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "能勝諸部最祕密　　成就世法出世法",
        "from": "T20n1089_001:0219a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦都有四種相　　行者諦聽我說之",
        "from": "T20n1089_001:0219a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初作息災加持法　　第二增益福智成",
        "from": "T20n1089_001:0219a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第三隨心愛念法　　第四降伏一切怨",
        "from": "T20n1089_001:0219a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此四種持護摩事　　上中下法次第陳",
        "from": "T20n1089_001:0219a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲成就息災者　　先發安忍慈悲心",
        "from": "T20n1089_001:0219a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須求無上妙覺地　　莫樂聲聞二乘心",
        "from": "T20n1089_001:0219a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復若求成就大事　　要當先作轉障法",
        "from": "T20n1089_001:0219a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取白檀十六指　　一持一燒稱己名",
        "from": "T20n1089_001:0219a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數至百八或千八　　本所求願皆滿足",
        "from": "T20n1089_001:0219a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者若除他病時　　或滅國中大災厄",
        "from": "T20n1089_001:0219a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或自他災及畜生　　應可存心請大聖",
        "from": "T20n1089_001:0219a17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於其一一大城門　　想中各安本尊者",
        "from": "T20n1089_001:0219a18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "種種殊妙寶莊嚴　　思惟六臂如盡說",
        "from": "T20n1089_001:0219a19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又想眉間出白光　　徐徐廣引遍世界",
        "from": "T20n1089_001:0219a20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切眾生所有殃　　悉皆頓謝無所有",
        "from": "T20n1089_001:0219a21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或想此光入我身　　一切罪障皆滅盡",
        "from": "T20n1089_001:0219a22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "罪滅福生以加持　　復勤念誦便成就",
        "from": "T20n1089_001:0219a23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今略說福生法　　大慈悲故順有情",
        "from": "T20n1089_001:0219a25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "菩薩分身遍一切　　隨彼眾生所樂心",
        "from": "T20n1089_001:0219a26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又復安立諸珍藏　　種種法門各不同",
        "from": "T20n1089_001:0219a27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "百千萬國所隨者　　一一勤求皆悉成",
        "from": "T20n1089_001:0219a28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或說相法或無相　　隨順眾生性所趣",
        "from": "T20n1089_001:0219a29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "建立佛法護世界　　大聖力勢不思議",
        "from": "T20n1089_001:0219b01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "奉現一法速超越　　於一法中復現三",
        "from": "T20n1089_001:0219b02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "三部各別有三種　　就中最初是攘災",
        "from": "T20n1089_001:0219b03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "諸部攘災略說已　　次當增益今說之",
        "from": "T20n1089_001:0219b04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求長壽及財寶　　復樂聰明聞持門",
        "from": "T20n1089_001:0219b05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或求宿命知前後　　或欣現世力如龍",
        "from": "T20n1089_001:0219b06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為自作增益福　　先須每喫三白食",
        "from": "T20n1089_001:0219b07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若求長壽身無患　　作一火爐蓮華形",
        "from": "T20n1089_001:0219b08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "深淺方圓皆一肘　　又取五淨塗其中",
        "from": "T20n1089_001:0219b09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復取蘇密及檀木　　一呪一燒稱己名",
        "from": "T20n1089_001:0219b10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "數至百八一千八　　乃至三千隨前儀",
        "from": "T20n1089_001:0219b11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有先世極重業　　不過萬遍悉皆除",
        "from": "T20n1089_001:0219b12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "除滅罪已增福智　　即得無病及命長",
        "from": "T20n1089_001:0219b13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若為他故作此事　　但稱彼名法則同",
        "from": "T20n1089_001:0219b14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "行者如法作存心　　每日晨朝取柳木",
        "from": "T20n1089_001:0219b15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "呪滿八百便嚼之　　不久一月或三月",
        "from": "T20n1089_001:0219b16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "即能開心得聰明　　作護摩用小心呪",
        "from": "T20n1089_001:0219b17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "念誦根本大真言　　我此略說增益福",
        "from": "T20n1089_001:0219b18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "無福眾生速加持　　莫論作此數種法",
        "from": "T20n1089_001:0219b19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "但願長命大護身　　若能每日持千八",
        "from": "T20n1089_001:0219b20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "現世即得宿命通　　日夜殷勤恒修習",
        "from": "T20n1089_001:0219b21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所求悉地無不成　　又若服藥求色力",
        "from": "T20n1089_001:0219b22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "根本真言加持之　　念誦十萬滿足已",
        "from": "T20n1089_001:0219b23_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每須空服取服之　　三七五七復過七",
        "from": "T20n1089_001:0219b24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "力同九龍等無差　　若持延年甘露藥",
        "from": "T20n1089_001:0219b25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或得一劫過中劫　　若持藥草求成就",
        "from": "T20n1089_001:0219b26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "過於諸部以得成　　牛酥雌黃雄黃等",
        "from": "T20n1089_001:0219b27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "須持一物置壇中　　白月一日或十五",
        "from": "T20n1089_001:0219b28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "初夜起首念誦之　　一期持誦勿間斷",
        "from": "T20n1089_001:0219b29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "及現三相唯限之　　初現煖相成聰智",
        "from": "T20n1089_001:0219c01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "第二煙相隱其軀　　第三火現昇空去",
        "from": "T20n1089_001:0219c02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此得成就大仙人　　悉地牛酥應當服",
        "from": "T20n1089_001:0219c03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "雄黃等藥用塗之　　我今說此增益訖",
        "from": "T20n1089_001:0219c04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今復說隨順事　　人與非人及畜生",
        "from": "T20n1089_001:0219c07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "又取鹽和大麥麫　　所求隨心作其形",
        "from": "T20n1089_001:0219c08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "男左女右從脚興　　須用賓鐵刀細截",
        "from": "T20n1089_001:0219c09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "每日三時各百八　　乃至千八自隨心",
        "from": "T20n1089_001:0219c10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲羅遮令憶念　　所造形持稱彼名",
        "from": "T20n1089_001:0219c11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護摩亦須念名號　　不過八百即隨心",
        "from": "T20n1089_001:0219c12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若攝諸龍作隨順　　先作一龍似蛇形",
        "from": "T20n1089_001:0219c13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若欲祈雨須青色　　復若澇時應赤色",
        "from": "T20n1089_001:0219c14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "燒火須用乳汁木　　不過三日即成之",
        "from": "T20n1089_001:0219c15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "作法應須至誠意　　就中不得懈慢心",
        "from": "T20n1089_001:0219c16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若攝諸天藥叉等　　隨類各各稱本名",
        "from": "T20n1089_001:0219c17_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若有怨家令歡喜　　念誦亦得轉彼心",
        "from": "T20n1089_001:0219c18_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或作護摩或持誦　　上中下品怨家別",
        "from": "T20n1089_001:0219c19_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "上根福報三百遍　　中下無福再稱之",
        "from": "T20n1089_001:0219c20_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "隨心念誦我略說　　智者應須諦思惟",
        "from": "T20n1089_001:0219c21_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一切部中總攝盡　　祕密最要蓮華心",
        "from": "T20n1089_001:0219c22_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我今稽首彼大聖　　為現種種方便門",
        "from": "T20n1089_001:0219c24_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "護佛法故現忿怒　　降伏破滅聖法人",
        "from": "T20n1089_001:0219c25_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "此中火爐須三角　　用燒雌木兼濕薪",
        "from": "T20n1089_001:0219c26_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若作此法須黑月　　或用一日及月頭",
        "from": "T20n1089_001:0219c27_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "露體樂幽及忿怒　　大聲持誦稱彼名",
        "from": "T20n1089_001:0219c28_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "惡酥惡油擲爐底　　不滿千八自然成",
        "from": "T20n1089_001:0219c29_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "降伏鬼神卒暴者　　應可復燒禮嚕根",
        "from": "T20n1089_001:0220a01_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "或燒苦楝或生木　　麫和人血復作形",
        "from": "T20n1089_001:0220a02_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "一截一呪百八遍　　不過三日即調柔",
        "from": "T20n1089_001:0220a03_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若復降伏滅法者　　加意供養大明王",
        "from": "T20n1089_001:0220a04_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "用諸毒藥燒爐中　　又取濕薪作護摩",
        "from": "T20n1089_001:0220a05_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "於三日中八百遍　　令彼惡人即迴心",
        "from": "T20n1089_001:0220a06_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "復若不作護摩事　　持誦根本真言明",
        "from": "T20n1089_001:0220a07_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "所欲降伏一切者　　句句皆須稱彼名",
        "from": "T20n1089_001:0220a08_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "其數復滿八百遍　　彼即自來尊敬之",
        "from": "T20n1089_001:0220a09_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "依法略說此調伏　　行者應須諦思惟",
        "from": "T20n1089_001:0220a10_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "甚深祕密口訣法　　次第念誦都攝門",
        "from": "T20n1089_001:0220a11_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "若能承侍此尊者　　不是一生種善根",
        "from": "T20n1089_001:0220a12_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "曾經無量諸佛所　　修習菩提究竟門",
        "from": "T20n1089_001:0220a13_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "就中若值善知識　　一生即入不壞門",
        "from": "T20n1089_001:0220a14_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "我若廣說此功德　　無量億劫歎無窮",
        "from": "T20n1089_001:0220a15_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "今已略陳此少耳　　行者精心勤修之",
        "from": "T20n1089_001:0220a16_0",
        "context_with_next_sentence": true
    },
    {
        "source_sentence": "都表如意輪儀軌",
        "from": "T20n1089_001:0220a17_100",
        "context_with_next_sentence": false
    }
]